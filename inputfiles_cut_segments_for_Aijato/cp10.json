{
  "cp10:0.1_0": "Cariyāpiṭaka",
  "cp10:0.2_0": "Akittivagga",
  "cp10:0.3_0": "Dānapāramī 10",
  "cp10:0.4_0": "Sasapaṇḍitacariya",
  "cp10:1.1_0": "“Punāparaṁ yadā homi,",
  "cp10:1.2_0": "Sasako pavanacārako;",
  "cp10:1.3_0": "Tiṇapaṇṇasākaphalabhakkho,",
  "cp10:1.4_0": "Paraheṭhanavivajjito.",
  "cp10:2.1_0": "Makkaṭo ca siṅgālo ca,",
  "cp10:2.2_0": "suttapoto cahaṁ tadā;",
  "cp10:2.3_0": "Vasāma ekasāmantā,",
  "cp10:2.4_0": "sāyaṁ pāto ca dissare.",
  "cp10:3.1_0": "Ahaṁ te anusāsāmi,",
  "cp10:3.2_0": "kiriye kalyāṇapāpake;",
  "cp10:3.3_0": "‘Pāpāni parivajjetha,",
  "cp10:3.4_0": "kalyāṇe abhinivissatha’.",
  "cp10:4.1_0": "Uposathamhi divase,",
  "cp10:4.2_0": "candaṁ disvāna pūritaṁ;",
  "cp10:4.3_0": "Etesaṁ tattha ācikkhiṁ,",
  "cp10:4.4_0": "‘divaso ajjuposatho.",
  "cp10:5.1_0": "Dānāni paṭiyādetha,",
  "cp10:5.2_0": "dakkhiṇeyyassa dātave;",
  "cp10:5.3_0": "Datvā dānaṁ dakkhiṇeyye,",
  "cp10:5.4_0": "upavassathuposathaṁ’.",
  "cp10:6.1_0": "Te me sādhūti vatvāna,",
  "cp10:6.2_0": "yathāsatti yathābalaṁ;",
  "cp10:6.3_0": "Dānāni paṭiyādetvā,",
  "cp10:6.4_0": "dakkhiṇeyyaṁ gavesisuṁ.",
  "cp10:7.1_0": "Ahaṁ nisajja cintesiṁ,",
  "cp10:7.2_0": "dānaṁ dakkhiṇanucchavaṁ;",
  "cp10:7.3_0": "‘Yadihaṁ labhe dakkhiṇeyyaṁ,",
  "cp10:7.4_0": "kiṁ me dānaṁ bhavissati.",
  "cp10:8.1_0": "Na me atthi tilā muggā,",
  "cp10:8.2_0": "māsā vā taṇḍulā ghataṁ;",
  "cp10:8.3_0": "Ahaṁ tiṇena yāpemi,",
  "cp10:8.4_0": "na sakkā tiṇa dātave.",
  "cp10:9.1_0": "Yadi koci eti dakkhiṇeyyo,",
  "cp10:9.2_0": "Bhikkhāya mama santike;",
  "cp10:9.3_0": "Dajjāhaṁ sakamattānaṁ,",
  "cp10:9.4_0": "Na so tuccho gamissati’.",
  "cp10:10.1_0": "Mama saṅkappamaññāya,",
  "cp10:10.2_0": "sakko brāhmaṇavaṇṇinā;",
  "cp10:10.3_0": "Āsayaṁ me upāgacchi,",
  "cp10:10.4_0": "dānavīmaṁsanāya me.",
  "cp10:11.1_0": "Tamahaṁ disvāna santuṭṭho,",
  "cp10:11.2_0": "idaṁ vacanamabraviṁ;",
  "cp10:11.3_0": "‘Sādhu khosi anuppatto,",
  "cp10:11.4_0": "ghāsahetu mamantike.",
  "cp10:12.1_0": "Adinnapubbaṁ dānavaraṁ,",
  "cp10:12.2_0": "ajja dassāmi te ahaṁ;",
  "cp10:12.3_0": "Tuvaṁ sīlaguṇūpeto,",
  "cp10:12.4_0": "ayuttaṁ te paraheṭhanaṁ.",
  "cp10:13.1_0": "Ehi aggiṁ padīpehi,",
  "cp10:13.2_0": "nānākaṭṭhe samānaya;",
  "cp10:13.3_0": "Ahaṁ pacissamattānaṁ,",
  "cp10:13.4_0": "pakkaṁ tvaṁ bhakkhayissasi’.",
  "cp10:14.1_0": "‘Sādhū’ti so haṭṭhamano,",
  "cp10:14.2_0": "nānākaṭṭhe samānayi;",
  "cp10:14.3_0": "Mahantaṁ akāsi citakaṁ,",
  "cp10:14.4_0": "katvā aṅgāragabbhakaṁ.",
  "cp10:15.1_0": "Aggiṁ tattha padīpesi,",
  "cp10:15.2_0": "yathā so khippaṁ mahā bhave;",
  "cp10:15.3_0": "Phoṭetvā rajagate gatte,",
  "cp10:15.4_0": "ekamantaṁ upāvisiṁ.",
  "cp10:16.1_0": "Yadā mahākaṭṭhapuñjo,",
  "cp10:16.2_0": "āditto dhamadhamāyati;",
  "cp10:16.3_0": "Taduppatitvā papatiṁ,",
  "cp10:16.4_0": "majjhe jālasikhantare.",
  "cp10:17.1_0": "Yathā sītodakaṁ nāma,",
  "cp10:17.2_0": "Paviṭṭhaṁ yassa kassaci;",
  "cp10:17.3_0": "Sameti darathapariḷāhaṁ,",
  "cp10:17.4_0": "Assādaṁ deti pīti ca.",
  "cp10:18.1_0": "Tatheva jalitaṁ aggiṁ,",
  "cp10:18.2_0": "paviṭṭhassa mamaṁ tadā;",
  "cp10:18.3_0": "Sabbaṁ sameti darathaṁ,",
  "cp10:18.4_0": "yathā sītodakaṁ viya.",
  "cp10:19.1_0": "Chaviṁ cammaṁ maṁsaṁ nhāruṁ,",
  "cp10:19.2_0": "Aṭṭhiṁ hadayabandhanaṁ;",
  "cp10:19.3_0": "Kevalaṁ sakalaṁ kāyaṁ,",
  "cp10:19.4_0": "Brāhmaṇassa adāsahan”ti. ",
  "cp10:20.1_0": "Sasapaṇḍitacariyaṁ dasamaṁ.",
  "cp10:21.1_0": "Akittivaggo paṭhamo.",
  "cp10:22.1_0": "Tassuddānaṁ",
  "cp10:23.1_0": "Akittibrāhmaṇo saṅkho,",
  "cp10:23.2_0": "kururājā dhanañcayo;",
  "cp10:23.3_0": "Mahāsudassano rājā,",
  "cp10:23.4_0": "mahāgovindabrāhmaṇo.",
  "cp10:24.1_0": "Nimi candakumāro ca,",
  "cp10:24.2_0": "sivi vessantaro saso;",
  "cp10:24.3_0": "Ahameva tadā āsiṁ,",
  "cp10:24.4_0": "yo te dānavare adā.",
  "cp10:25.1_0": "Ete dānaparikkhārā,",
  "cp10:25.2_0": "ete dānassa pāramī;",
  "cp10:25.3_0": "Jīvitaṁ yācake datvā,",
  "cp10:25.4_0": "imaṁ pārami pūrayiṁ.",
  "cp10:26.1_0": "Bhikkhāya upagataṁ disvā,",
  "cp10:26.2_0": "sakattānaṁ pariccajiṁ;",
  "cp10:26.3_0": "Dānena me samo natthi,",
  "cp10:26.4_0": "esā me dānapāramīti.",
  "cp10:27.1_0": "Dānapāraminiddeso niṭṭhito."
}