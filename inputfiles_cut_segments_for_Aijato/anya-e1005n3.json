{
  "anya-e1005n3:0_0": "4. Mittakaṇḍo",
  "anya-e1005n3:1_0": "79.",
  "anya-e1005n3:2_0": " Hitakāro paro bandhu,",
  "anya-e1005n3:3_0": "Bandhūpi ahito paro;",
  "anya-e1005n3:4_0": "A hito dehajo byādhi,",
  "anya-e1005n3:5_0": "Hitaṁ araññamosadhaṁ.",
  "anya-e1005n3:6_0": "80.",
  "anya-e1005n3:7_0": " Parokkhe guṇa-hantāraṁ,",
  "anya-e1005n3:8_0": "Paccakkhe piyavādinaṁ;",
  "anya-e1005n3:9_0": "Vajjeyya tādisaṁ mittaṁ,",
  "anya-e1005n3:10_0": "Visakumbhe yathā madhuṁ.",
  "anya-e1005n3:11_0": "81.",
  "anya-e1005n3:12_0": " Dhanahīne caje mitto,",
  "anya-e1005n3:13_0": "Puttadārā sahodarā;",
  "anya-e1005n3:14_0": "Dhanavantaṁva sevanti,",
  "anya-e1005n3:15_0": "Dhanaṁ loke mahā sakhā.",
  "anya-e1005n3:16_0": "82.",
  "anya-e1005n3:17_0": " Jāneyya pesena bhaccaṁ,",
  "anya-e1005n3:18_0": "Bandhuṁ vāpi bhayāgate;",
  "anya-e1005n3:19_0": "Appakāsu tathā mittaṁ,",
  "anya-e1005n3:20_0": "Dārañca vibhavakkhaye.",
  "anya-e1005n3:21_0": "83.",
  "anya-e1005n3:22_0": " So bandhu yo hite yutto,",
  "anya-e1005n3:23_0": "Pitaro honti posako;",
  "anya-e1005n3:24_0": "Taṁ mittaṁ yattha vissāso,",
  "anya-e1005n3:25_0": "Sā bhariyā ca yassa nibbūti.",
  "anya-e1005n3:26_0": "84.",
  "anya-e1005n3:27_0": " Na vissase a-vissattaṁ,",
  "anya-e1005n3:28_0": "Mittañcāpi na vissase;",
  "anya-e1005n3:29_0": "Kadāci kupito mito,",
  "anya-e1005n3:30_0": "Sabbaṁ dosaṁ pakāsaye.",
  "anya-e1005n3:31_0": "85.",
  "anya-e1005n3:32_0": " Sakiṁ duṭṭhañca yo mittaṁ,",
  "anya-e1005n3:33_0": "Puna sandhitumicchati;",
  "anya-e1005n3:34_0": "So maccuṁ upagaṇhāti,",
  "anya-e1005n3:35_0": "Gabbhamassatarī yathā.",
  "anya-e1005n3:36_0": "86.",
  "anya-e1005n3:37_0": " Vahe a-mittaṁ khandhena,",
  "anya-e1005n3:38_0": "Yāva kālo anāgato;",
  "anya-e1005n3:39_0": "Tameva āgate kāle,",
  "anya-e1005n3:40_0": "Sele bhinde ghaṭaṁ iva.",
  "anya-e1005n3:41_0": "87.",
  "anya-e1005n3:42_0": " Iṇaseso aggiseso,",
  "anya-e1005n3:43_0": "Satruseso tatheva ca;",
  "anya-e1005n3:44_0": "Punappunaṁ vivaḍḍhanti,",
  "anya-e1005n3:45_0": "Tasmā sesaṁ na kāraye.",
  "anya-e1005n3:46_0": "88.",
  "anya-e1005n3:47_0": " Padumaṁva mukhaṁ yassa,",
  "anya-e1005n3:48_0": "Vācā candana sītalā;",
  "anya-e1005n3:49_0": "Tādisaṁ nopaseveyya,",
  "anya-e1005n3:50_0": "Hadayetu halāhalaṁ.",
  "anya-e1005n3:51_0": "89.",
  "anya-e1005n3:52_0": " Na seve pharusaṁ sāmiṁ,",
  "anya-e1005n3:53_0": "Naca seveyya macchariṁ;",
  "anya-e1005n3:54_0": "Tato apaggaṇhaṁ sāmiṁ,",
  "anya-e1005n3:55_0": "Neva niggahitaṁ tato.",
  "anya-e1005n3:56_0": "90.",
  "anya-e1005n3:57_0": " Siṅgī paññāsa hatthena,",
  "anya-e1005n3:58_0": "Vajje satena vājinaṁ;",
  "anya-e1005n3:59_0": "Hatthiṁ dantiṁ sahassena,",
  "anya-e1005n3:60_0": "Desa cāgena dujjanaṁ.",
  "anya-e1005n3:61_0": "91.",
  "anya-e1005n3:62_0": " Kudesañca kumittañca,",
  "anya-e1005n3:63_0": "Kukulañca kubandhavaṁ;",
  "anya-e1005n3:64_0": "Kudārañca kudāsañca,",
  "anya-e1005n3:65_0": "Dūrato parivajjaye.",
  "anya-e1005n3:66_0": "92.",
  "anya-e1005n3:67_0": " Rogāture ca dubbhikkhe,",
  "anya-e1005n3:68_0": "Byasane sattu viggahe;",
  "anya-e1005n3:69_0": "Rājadvāre susāne ca,",
  "anya-e1005n3:70_0": "Ye tiṭṭhanti sumittakā.",
  "anya-e1005n3:71_0": "93.",
  "anya-e1005n3:72_0": " Sītavāco bahumitto,",
  "anya-e1005n3:73_0": "Pharuso appamittako;",
  "anya-e1005n3:74_0": "Upamaṁ ettha ñātabbā,",
  "anya-e1005n3:75_0": "Canda-sūriya-rājūnaṁ.",
  "anya-e1005n3:76_0": "Mittakaṇḍo niṭṭhito."
}