{
  "anya-e0605n7:0_0": "Vijāyanamaṅgaladīpanīgāthā",
  "anya-e0605n7:1_0": "36.",
  "anya-e0605n7:2_0": "Sā puṇṇagabbhā dasamāsato paraṁ,",
  "anya-e0605n7:3_0": "Gantvāna phullaṁ varalumbinīvanaṁ;",
  "anya-e0605n7:4_0": "Ṭhitā gahetvā varasālasākhaṁ,",
  "anya-e0605n7:5_0": "Vijāyi taṁ puttavaraṁ sukhena.",
  "anya-e0605n7:6_0": "37.",
  "anya-e0605n7:7_0": "Tadā sahassīdasalokadhātusu,",
  "anya-e0605n7:8_0": "Devā ca nāgā asurā ca yakkhā;",
  "anya-e0605n7:9_0": "Nānādisā maṅgalacakkavāḷaṁ,",
  "anya-e0605n7:10_0": "Sumaṅgalaṁ maṅgalamāgamiṁsu.",
  "anya-e0605n7:11_0": "38.",
  "anya-e0605n7:12_0": "Anekasākhañca sahassamaṇḍalaṁ,",
  "anya-e0605n7:13_0": "Chattaṁ marū dhārayumantalikkhe;",
  "anya-e0605n7:14_0": "Suvaṇṇadaṇḍā vipatanti cāmarā,",
  "anya-e0605n7:15_0": "Khajjiṁsu bherī ca nadiṁsu saṅkhā.",
  "anya-e0605n7:16_0": "39.",
  "anya-e0605n7:17_0": "Malenakenāpi anūpalitto,",
  "anya-e0605n7:18_0": "Ṭhito va pādāni pasārayanto;",
  "anya-e0605n7:19_0": "Kathī va dhammāsanatotaranto,",
  "anya-e0605n7:20_0": "Jāto yathādiccavaro nabhamhā.",
  "anya-e0605n7:21_0": "40.",
  "anya-e0605n7:22_0": "Khīṇāsavā brahmagaṇopagantvā,",
  "anya-e0605n7:23_0": "Suvaṇṇajālena paṭiggahesuṁ;",
  "anya-e0605n7:24_0": "Tato ca devājinacammakena,",
  "anya-e0605n7:25_0": "Tato dukūlena ca taṁ manussā.",
  "anya-e0605n7:26_0": "41.",
  "anya-e0605n7:27_0": "Tesaṁ pi hatthā varabhūmiyaṁ ṭhito,",
  "anya-e0605n7:28_0": "Disā vilokesi sabbā samantato;",
  "anya-e0605n7:29_0": "Vadiṁsu devā pi ca brahmakāyikā,",
  "anya-e0605n7:30_0": "Tayā samo katthaci natthi uttaro.",
  "anya-e0605n7:31_0": "42.",
  "anya-e0605n7:32_0": "Gantvāna uttaraṁ satta padavārehi vikkamo,",
  "anya-e0605n7:33_0": "Sīhanādaṁ nadī tesaṁ devatānaṁ hi sāvayaṁ.",
  "anya-e0605n7:34_0": "43.",
  "anya-e0605n7:35_0": "Tato puttaṁ gahetvāna gatā mātā sakaṅgharaṁ,",
  "anya-e0605n7:36_0": "Mātā sattamiyaṁ gantvā deaputtattamāgami.",
  "anya-e0605n7:37_0": "44.",
  "anya-e0605n7:38_0": "Te brahmaṇā pañcamiyaṁ subhuttā,",
  "anya-e0605n7:39_0": "Nāmaṁ gahetuṁ varalakkhaṇāni;",
  "anya-e0605n7:40_0": "Disvāna ekaṅgulimukkhipiṁsu,",
  "anya-e0605n7:41_0": "Buddho ayaṁ hessati vītarāgo.",
  "anya-e0605n7:42_0": "45.",
  "anya-e0605n7:43_0": "Jiṇṇañca disvā byādhikaṁ matañca,",
  "anya-e0605n7:44_0": "Avhāyitaṁ pabbajitañca disvā;",
  "anya-e0605n7:45_0": "Ohāya pabbajjamupeti kāme,",
  "anya-e0605n7:46_0": "Buddho ayaṁ hessati vītarāgo."
}