{
  "tha-ap332:0.1_0": "Therāpadāna",
  "tha-ap332:0.2_0": "Umāpupphiyavagga",
  "tha-ap332:0.3_0": "10. Saparivārachattadāyakattheraapadāna",
  "tha-ap332:1.1_0": "“Padumuttaro lokavidū,",
  "tha-ap332:1.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap332:1.3_0": "Ākāse jalavuṭṭhīva,",
  "tha-ap332:1.4_0": "vassate dhammavuṭṭhiyā.",
  "tha-ap332:2.1_0": "Tamaddasāsiṁ sambuddhaṁ,",
  "tha-ap332:2.2_0": "desentaṁ amataṁ padaṁ;",
  "tha-ap332:2.3_0": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap332:2.4_0": "agamāsiṁ sakaṁ gharaṁ.",
  "tha-ap332:3.1_0": "Chattaṁ alaṅkataṁ gayha,",
  "tha-ap332:3.2_0": "upagacchiṁ naruttamaṁ;",
  "tha-ap332:3.3_0": "Haṭṭho haṭṭhena cittena,",
  "tha-ap332:3.4_0": "ākāse ukkhipiṁ ahaṁ.",
  "tha-ap332:4.1_0": "Susaṅgahitayānaṁva,",
  "tha-ap332:4.2_0": "dantova sāvakuttamo;",
  "tha-ap332:4.3_0": "Upagantvāna sambuddhaṁ,",
  "tha-ap332:4.4_0": "matthake sampatiṭṭhahi.",
  "tha-ap332:5.1_0": "Anukampako kāruṇiko,",
  "tha-ap332:5.2_0": "buddho lokagganāyako;",
  "tha-ap332:5.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap332:5.4_0": "imā gāthā abhāsatha.",
  "tha-ap332:6.1_0": "‘Yena chattamidaṁ dinnaṁ,",
  "tha-ap332:6.2_0": "alaṅkataṁ manoramaṁ;",
  "tha-ap332:6.3_0": "Tena cittappasādena,",
  "tha-ap332:6.4_0": "duggatiṁ so na gacchati.",
  "tha-ap332:7.1_0": "Sattakkhattuñca devesu,",
  "tha-ap332:7.2_0": "devarajjaṁ karissati;",
  "tha-ap332:7.3_0": "Bāttiṁsakkhattuñca rājā,",
  "tha-ap332:7.4_0": "cakkavattī bhavissati.",
  "tha-ap332:8.1_0": "Kappasatasahassamhi,",
  "tha-ap332:8.2_0": "okkākakulasambhavo;",
  "tha-ap332:8.3_0": "Gotamo nāma gottena,",
  "tha-ap332:8.4_0": "satthā loke bhavissati.",
  "tha-ap332:9.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap332:9.2_0": "oraso dhammanimmito;",
  "tha-ap332:9.3_0": "Sabbāsave pariññāya,",
  "tha-ap332:9.4_0": "nibbāyissatināsavo’.",
  "tha-ap332:10.1_0": "Buddhassa giramaññāya,",
  "tha-ap332:10.2_0": "vācāsabhimudīritaṁ;",
  "tha-ap332:10.3_0": "Pasannacitto sumano,",
  "tha-ap332:10.4_0": "bhiyyo hāsaṁ janesahaṁ.",
  "tha-ap332:11.1_0": "Jahitvā mānusaṁ yoniṁ,",
  "tha-ap332:11.2_0": "Dibbaṁ yoniṁ samajjhagaṁ;",
  "tha-ap332:11.3_0": "Vimānamuttamaṁ mayhaṁ,",
  "tha-ap332:11.4_0": "Abbhuggataṁ manoramaṁ.",
  "tha-ap332:12.1_0": "Vimānā nikkhamantassa,",
  "tha-ap332:12.2_0": "setacchattaṁ dharīyati;",
  "tha-ap332:12.3_0": "Tadā saññaṁ paṭilabhiṁ,",
  "tha-ap332:12.4_0": "pubbakammassidaṁ phalaṁ.",
  "tha-ap332:13.1_0": "Devalokā cavitvāna,",
  "tha-ap332:13.2_0": "manussattañca āgamiṁ;",
  "tha-ap332:13.3_0": "Chattiṁsakkhattuṁ cakkavattī,",
  "tha-ap332:13.4_0": "sattakappasatamhito.",
  "tha-ap332:14.1_0": "Tamhā kāyā cavitvāna,",
  "tha-ap332:14.2_0": "āgacchiṁ tidasaṁ puraṁ;",
  "tha-ap332:14.3_0": "Saṁsaritvānupubbena,",
  "tha-ap332:14.4_0": "mānusaṁ punarāgamiṁ.",
  "tha-ap332:15.1_0": "Okkantaṁ mātukucchiṁ maṁ,",
  "tha-ap332:15.2_0": "setacchattaṁ adhārayuṁ;",
  "tha-ap332:15.3_0": "Jātiyā sattavassohaṁ,",
  "tha-ap332:15.4_0": "pabbajiṁ anagāriyaṁ.",
  "tha-ap332:16.1_0": "Sunando nāma nāmena,",
  "tha-ap332:16.2_0": "brāhmaṇo mantapāragū;",
  "tha-ap332:16.3_0": "Phalikaṁ chattamādāya,",
  "tha-ap332:16.4_0": "sāvakaggassa so tadā.",
  "tha-ap332:17.1_0": "Anumodi mahāvīro,",
  "tha-ap332:17.2_0": "sāriputto mahākathī;",
  "tha-ap332:17.3_0": "Sutvānumodanaṁ tassa,",
  "tha-ap332:17.4_0": "pubbakammamanussariṁ.",
  "tha-ap332:18.1_0": "Añjaliṁ paggahetvāna,",
  "tha-ap332:18.2_0": "sakaṁ cittaṁ pasādayiṁ;",
  "tha-ap332:18.3_0": "Saritvā purimaṁ kammaṁ,",
  "tha-ap332:18.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap332:19.1_0": "Uṭṭhāya āsanā tamhā,",
  "tha-ap332:19.2_0": "sire katvāna añjaliṁ;",
  "tha-ap332:19.3_0": "Sambuddhaṁ abhivādetvā,",
  "tha-ap332:19.4_0": "imaṁ vācaṁ udīrayiṁ.",
  "tha-ap332:20.1_0": "Satasahassito kappe,",
  "tha-ap332:20.2_0": "buddho loke anuttaro;",
  "tha-ap332:20.3_0": "Padumuttaro lokavidū,",
  "tha-ap332:20.4_0": "āhutīnaṁ paṭiggaho.",
  "tha-ap332:21.1_0": "Tassa chattaṁ mayā dinnaṁ,",
  "tha-ap332:21.2_0": "vicittaṁ samalaṅkataṁ;",
  "tha-ap332:21.3_0": "Ubho hatthehi paggaṇhi,",
  "tha-ap332:21.4_0": "sayambhū aggapuggalo.",
  "tha-ap332:22.1_0": "Aho buddhā aho dhammā,",
  "tha-ap332:22.2_0": "aho no satthusampadā;",
  "tha-ap332:22.3_0": "Ekacchattassa dānena,",
  "tha-ap332:22.4_0": "duggatiṁ nupapajjahaṁ.",
  "tha-ap332:23.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap332:23.2_0": "bhavā sabbe samūhatā;",
  "tha-ap332:23.3_0": "Sabbāsave pariññāya,",
  "tha-ap332:23.4_0": "viharāmi anāsavo.",
  "tha-ap332:24.1_0": "Paṭisambhidā catasso,",
  "tha-ap332:24.2_0": "…pe…",
  "tha-ap332:24.3_0": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap332:25.1_0": "Itthaṁ sudaṁ āyasmā saparivārachattadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap332:26.1_0": "Saparivārachattadāyakattherassāpadānaṁ dasamaṁ.",
  "tha-ap332:27.1_0": "Umāpupphiyavaggo tettiṁsatimo.",
  "tha-ap332:28.1_0": "Tassuddānaṁ",
  "tha-ap332:29.1_0": "Umāpupphañca pulinaṁ,",
  "tha-ap332:29.2_0": "hāso yañño nimittako;",
  "tha-ap332:29.3_0": "Saṁsāvako nigguṇḍī ca,",
  "tha-ap332:29.4_0": "sumanaṁ pupphachattako;",
  "tha-ap332:29.5_0": "Saparivārachatto ca,",
  "tha-ap332:29.6_0": "gāthā sattasatuttarāti."
}