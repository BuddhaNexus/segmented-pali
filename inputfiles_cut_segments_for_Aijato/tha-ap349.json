{
  "tha-ap349:0.1_0": "Therāpadāna",
  "tha-ap349:0.2_0": "Ekapadumiyavagga",
  "tha-ap349:0.3_0": "7. Padumapūjakattheraapadāna",
  "tha-ap349:1.1_0": "“Himavantassāvidūre,",
  "tha-ap349:1.2_0": "romaso nāma pabbato;",
  "tha-ap349:1.3_0": "Buddhopi sambhavo nāma,",
  "tha-ap349:1.4_0": "abbhokāse vasī tadā.",
  "tha-ap349:2.1_0": "Bhavanā nikkhamitvāna,",
  "tha-ap349:2.2_0": "padumaṁ dhārayiṁ ahaṁ;",
  "tha-ap349:2.3_0": "Ekāhaṁ dhārayitvāna,",
  "tha-ap349:2.4_0": "puna bhavanupāgamiṁ.",
  "tha-ap349:3.1_0": "Ekanavutito kappe,",
  "tha-ap349:3.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap349:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap349:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap349:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap349:4.2_0": "…pe…",
  "tha-ap349:4.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap349:5.1_0": "Itthaṁ sudaṁ āyasmā padumapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap349:6.1_0": "Padumapūjakattherassāpadānaṁ sattamaṁ.",
  "tha-ap349:6.2_0": "Terasamaṁ bhāṇavāraṁ."
}