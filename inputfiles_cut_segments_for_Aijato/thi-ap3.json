{
  "thi-ap3:0.1_0": "Therīapadāna",
  "thi-ap3:0.2_0": "Sumedhāvagga",
  "thi-ap3:0.3_0": "3. Maṇḍapadāyikātherīapadāna",
  "thi-ap3:1.1_0": "“Koṇāgamanabuddhassa,",
  "thi-ap3:1.2_0": "maṇḍapo kārito mayā;",
  "thi-ap3:1.3_0": "Dhuvaṁ ticīvaraṁdāsiṁ,",
  "thi-ap3:1.4_0": "buddhassa lokabandhuno.",
  "thi-ap3:2.1_0": "Yaṁ yaṁ janapadaṁ yāmi,",
  "thi-ap3:2.2_0": "nigame rājadhāniyo;",
  "thi-ap3:2.3_0": "Sabbattha pūjitā homi,",
  "thi-ap3:2.4_0": "puññakammassidaṁ phalaṁ.",
  "thi-ap3:3.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap3:3.2_0": "…pe…",
  "thi-ap3:3.3_0": "viharāmi anāsavā.",
  "thi-ap3:4.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap3:4.2_0": "…pe…",
  "thi-ap3:4.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap3:5.1_0": "Paṭisambhidā catasso,",
  "thi-ap3:5.2_0": "…pe…",
  "thi-ap3:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap3:6.1_0": "Itthaṁ sudaṁ maṇḍapadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap3:7.1_0": "Maṇḍapadāyikātheriyāpadānaṁ tatiyaṁ."
}