{
  "tha-ap493:0.1_0": "Therāpadāna",
  "tha-ap493:0.2_0": "Kiṅkaṇipupphavagga",
  "tha-ap493:0.3_0": "1. Tikiṅkaṇipupphiyattheraapadāna",
  "tha-ap493:1.1_0": "“Kaṇikāraṁva jotantaṁ,",
  "tha-ap493:1.2_0": "nisinnaṁ pabbatantare;",
  "tha-ap493:1.3_0": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap493:1.4_0": "vipassiṁ lokanāyakaṁ.",
  "tha-ap493:2.1_0": "Tīṇi kiṅkaṇipupphāni,",
  "tha-ap493:2.2_0": "paggayha abhiropayiṁ;",
  "tha-ap493:2.3_0": "Sambuddhamabhipūjetvā,",
  "tha-ap493:2.4_0": "gacchāmi dakkhiṇāmukho.",
  "tha-ap493:3.1_0": "Tena kammena sukatena,",
  "tha-ap493:3.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap493:3.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap493:3.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap493:4.1_0": "Ekanavutito kappe,",
  "tha-ap493:4.2_0": "yaṁ buddhamabhipūjayiṁ;",
  "tha-ap493:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap493:4.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap493:5.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap493:5.2_0": "bhavā sabbe samūhatā;",
  "tha-ap493:5.3_0": "Nāgova bandhanaṁ chetvā,",
  "tha-ap493:5.4_0": "viharāmi anāsavo.",
  "tha-ap493:6.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap493:6.2_0": "mama buddhassa santike;",
  "tha-ap493:6.3_0": "Tisso vijjā anuppattā,",
  "tha-ap493:6.4_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap493:7.1_0": "Paṭisambhidā catasso,",
  "tha-ap493:7.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap493:7.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap493:7.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap493:8.1_0": "Itthaṁ sudaṁ āyasmā tikiṅkaṇipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap493:9.1_0": "Tikiṅkaṇipupphiyattherassāpadānaṁ paṭhamaṁ."
}