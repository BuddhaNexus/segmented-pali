{
  "tha-ap534:0.1_0": "Therāpadāna",
  "tha-ap534:0.2_0": "Kaccāyanavagga",
  "tha-ap534:0.3_0": "2. Vakkalittheraapadāna",
  "tha-ap534:1.1_0": "“Ito satasahassamhi,",
  "tha-ap534:1.2_0": "kappe uppajji nāyako;",
  "tha-ap534:1.3_0": "Anomanāmo amito,",
  "tha-ap534:1.4_0": "nāmena padumuttaro.",
  "tha-ap534:2.1_0": "Padumākāravadano,",
  "tha-ap534:2.2_0": "padumāmalasucchavī;",
  "tha-ap534:2.3_0": "Lokenānupalittova,",
  "tha-ap534:2.4_0": "toyena padumaṁ yathā.",
  "tha-ap534:3.1_0": "Vīro padumapattakkho,",
  "tha-ap534:3.2_0": "kanto ca padumaṁ yathā;",
  "tha-ap534:3.3_0": "Padumuttaragandhova,",
  "tha-ap534:3.4_0": "tasmā so padumuttaro.",
  "tha-ap534:4.1_0": "Lokajeṭṭho ca nimmāno,",
  "tha-ap534:4.2_0": "andhānaṁ nayanūpamo;",
  "tha-ap534:4.3_0": "Santaveso guṇanidhi,",
  "tha-ap534:4.4_0": "karuṇāmatisāgaro.",
  "tha-ap534:5.1_0": "Sa kadāci mahāvīro,",
  "tha-ap534:5.2_0": "brahmāsurasuraccito;",
  "tha-ap534:5.3_0": "Sadevamanujākiṇṇe,",
  "tha-ap534:5.4_0": "janamajjhe jinuttamo.",
  "tha-ap534:6.1_0": "Vadanena sugandhena,",
  "tha-ap534:6.2_0": "madhurena rutena ca;",
  "tha-ap534:6.3_0": "Rañjayaṁ parisaṁ sabbaṁ,",
  "tha-ap534:6.4_0": "santhavī sāvakaṁ sakaṁ.",
  "tha-ap534:7.1_0": "Saddhādhimutto sumati,",
  "tha-ap534:7.2_0": "mama dassanalālaso;",
  "tha-ap534:7.3_0": "Natthi etādiso añño,",
  "tha-ap534:7.4_0": "yathāyaṁ bhikkhu vakkali.",
  "tha-ap534:8.1_0": "Tadāhaṁ haṁsavatiyaṁ,",
  "tha-ap534:8.2_0": "nagare brāhmaṇatrajo;",
  "tha-ap534:8.3_0": "Hutvā sutvā ca taṁ vākyaṁ,",
  "tha-ap534:8.4_0": "taṁ ṭhānamabhirocayiṁ.",
  "tha-ap534:9.1_0": "Sasāvakaṁ taṁ vimalaṁ,",
  "tha-ap534:9.2_0": "nimantetvā tathāgataṁ;",
  "tha-ap534:9.3_0": "Sattāhaṁ bhojayitvāna,",
  "tha-ap534:9.4_0": "dussehacchādayiṁ tadā.",
  "tha-ap534:10.1_0": "Nipacca sirasā tassa,",
  "tha-ap534:10.2_0": "anantaguṇasāgare;",
  "tha-ap534:10.3_0": "Nimuggo pītisampuṇṇo,",
  "tha-ap534:10.4_0": "idaṁ vacanamabraviṁ.",
  "tha-ap534:11.1_0": "‘Yo so tayā santhavito,",
  "tha-ap534:11.2_0": "ito sattamake muni;",
  "tha-ap534:11.3_0": "Bhikkhu saddhāvataṁ aggo,",
  "tha-ap534:11.4_0": "tādiso homahaṁ mune’.",
  "tha-ap534:12.1_0": "Evaṁ vutte, mahāvīro,",
  "tha-ap534:12.2_0": "anāvaraṇadassano;",
  "tha-ap534:12.3_0": "Imaṁ vākyaṁ udīresi,",
  "tha-ap534:12.4_0": "parisāya mahāmuni.",
  "tha-ap534:13.1_0": "‘Passathetaṁ māṇavakaṁ,",
  "tha-ap534:13.2_0": "pītamaṭṭhanivāsanaṁ;",
  "tha-ap534:13.3_0": "Hemayaññopacitaṅgaṁ,",
  "tha-ap534:13.4_0": "jananettamanoharaṁ.",
  "tha-ap534:14.1_0": "Eso anāgataddhāne,",
  "tha-ap534:14.2_0": "gotamassa mahesino;",
  "tha-ap534:14.3_0": "Aggo saddhādhimuttānaṁ,",
  "tha-ap534:14.4_0": "sāvakoyaṁ bhavissati.",
  "tha-ap534:15.1_0": "Devabhūto manusso vā,",
  "tha-ap534:15.2_0": "sabbasantāpavajjito;",
  "tha-ap534:15.3_0": "Sabbabhogaparibyūḷho,",
  "tha-ap534:15.4_0": "sukhito saṁsarissati.",
  "tha-ap534:16.1_0": "Satasahassito kappe,",
  "tha-ap534:16.2_0": "okkākakulasambhavo;",
  "tha-ap534:16.3_0": "Gotamo nāma gottena,",
  "tha-ap534:16.4_0": "satthā loke bhavissati.",
  "tha-ap534:17.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap534:17.2_0": "oraso dhammanimmito;",
  "tha-ap534:17.3_0": "Vakkali nāma nāmena,",
  "tha-ap534:17.4_0": "hessati satthu sāvako’.",
  "tha-ap534:18.1_0": "Tena kammavisesena,",
  "tha-ap534:18.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap534:18.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap534:18.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap534:19.1_0": "Sabbattha sukhito hutvā,",
  "tha-ap534:19.2_0": "saṁsaranto bhavābhave;",
  "tha-ap534:19.3_0": "Sāvatthiyaṁ pure jāto,",
  "tha-ap534:19.4_0": "kule aññatare ahaṁ.",
  "tha-ap534:20.1_0": "Nonītasukhumālaṁ maṁ,",
  "tha-ap534:20.2_0": "jātapallavakomalaṁ;",
  "tha-ap534:20.3_0": "Mandaṁ uttānasayanaṁ,",
  "tha-ap534:20.4_0": "pisācībhayatajjitā.",
  "tha-ap534:21.1_0": "Pādamūle mahesissa,",
  "tha-ap534:21.2_0": "sāyesuṁ dīnamānasā;",
  "tha-ap534:21.3_0": "‘Imaṁ dadāma te nātha,",
  "tha-ap534:21.4_0": "saraṇaṁ hohi nāyaka’.",
  "tha-ap534:22.1_0": "Tadā paṭiggahi so maṁ,",
  "tha-ap534:22.2_0": "bhītānaṁ saraṇo muni;",
  "tha-ap534:22.3_0": "Jālinā cakkaṅkitena,",
  "tha-ap534:22.4_0": "mudukomalapāṇinā.",
  "tha-ap534:23.1_0": "Tadā pabhuti tenāhaṁ,",
  "tha-ap534:23.2_0": "arakkheyyena rakkhito;",
  "tha-ap534:23.3_0": "Sabbaveravinimutto,",
  "tha-ap534:23.4_0": "sukhena parivuddhito.",
  "tha-ap534:24.1_0": "Sugatena vinā bhūto,",
  "tha-ap534:24.2_0": "ukkaṇṭhāmi muhuttakaṁ;",
  "tha-ap534:24.3_0": "Jātiyā sattavassohaṁ,",
  "tha-ap534:24.4_0": "pabbajiṁ anagāriyaṁ.",
  "tha-ap534:25.1_0": "Sabbapāramisambhūtaṁ,",
  "tha-ap534:25.2_0": "nīlakkhinayanaṁ varaṁ;",
  "tha-ap534:25.3_0": "Rūpaṁ sabbasubhākiṇṇaṁ,",
  "tha-ap534:25.4_0": "atitto viharāmahaṁ.",
  "tha-ap534:26.1_0": "Buddharūparatiṁ ñatvā,",
  "tha-ap534:26.2_0": "tadā ovadi maṁ jino;",
  "tha-ap534:26.3_0": "‘Alaṁ vakkali kiṁ rūpe,",
  "tha-ap534:26.4_0": "ramase bālanandite.",
  "tha-ap534:27.1_0": "Yo hi passati saddhammaṁ,",
  "tha-ap534:27.2_0": "so maṁ passati paṇḍito;",
  "tha-ap534:27.3_0": "Apassamāno saddhammaṁ,",
  "tha-ap534:27.4_0": "maṁ passampi na passati.",
  "tha-ap534:28.1_0": "Anantādīnavo kāyo,",
  "tha-ap534:28.2_0": "visarukkhasamūpamo;",
  "tha-ap534:28.3_0": "Āvāso sabbarogānaṁ,",
  "tha-ap534:28.4_0": "puñjo dukkhassa kevalo.",
  "tha-ap534:29.1_0": "Nibbindiya tato rūpe,",
  "tha-ap534:29.2_0": "khandhānaṁ udayabbayaṁ;",
  "tha-ap534:29.3_0": "Passa upakkilesānaṁ,",
  "tha-ap534:29.4_0": "sukhenantaṁ gamissasi’.",
  "tha-ap534:30.1_0": "Evaṁ tenānusiṭṭhohaṁ,",
  "tha-ap534:30.2_0": "nāyakena hitesinā;",
  "tha-ap534:30.3_0": "Gijjhakūṭaṁ samāruyha,",
  "tha-ap534:30.4_0": "jhāyāmi girikandare.",
  "tha-ap534:31.1_0": "Ṭhito pabbatapādamhi,",
  "tha-ap534:31.2_0": "assāsayi mahāmuni;",
  "tha-ap534:31.3_0": "Vakkalīti jino vācaṁ,",
  "tha-ap534:31.4_0": "taṁ sutvā mudito ahaṁ.",
  "tha-ap534:32.1_0": "Pakkhandiṁ selapabbhāre,",
  "tha-ap534:32.2_0": "anekasataporise;",
  "tha-ap534:32.3_0": "Tadā buddhānubhāvena,",
  "tha-ap534:32.4_0": "sukheneva mahiṁ gato.",
  "tha-ap534:33.1_0": "Punopi dhammaṁ deseti,",
  "tha-ap534:33.2_0": "khandhānaṁ udayabbayaṁ;",
  "tha-ap534:33.3_0": "Tamahaṁ dhammamaññāya,",
  "tha-ap534:33.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap534:34.1_0": "Sumahāparisamajjhe,",
  "tha-ap534:34.2_0": "tadā maṁ caraṇantago;",
  "tha-ap534:34.3_0": "Aggaṁ saddhādhimuttānaṁ,",
  "tha-ap534:34.4_0": "paññapesi mahāmati.",
  "tha-ap534:35.1_0": "Satasahassito kappe,",
  "tha-ap534:35.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap534:35.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap534:35.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap534:36.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap534:36.2_0": "…pe…",
  "tha-ap534:36.3_0": "viharāmi anāsavo.",
  "tha-ap534:37.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap534:37.2_0": "…pe…",
  "tha-ap534:37.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap534:38.1_0": "Paṭisambhidā catasso,",
  "tha-ap534:38.2_0": "…pe…",
  "tha-ap534:38.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap534:39.1_0": "Itthaṁ sudaṁ āyasmā vakkalitthero imā gāthāyo abhāsitthāti.",
  "tha-ap534:40.1_0": "Vakkalittherassāpadānaṁ dutiyaṁ."
}