{
  "tha-ap548:0.1_0": "Therāpadāna",
  "tha-ap548:0.2_0": "Bhaddiyavagga",
  "tha-ap548:0.3_0": "6. Kāḷudāyittheraapadāna",
  "tha-ap548:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap548:1.2_0": "sabbadhammesu cakkhumā;",
  "tha-ap548:1.3_0": "Ito satasahassamhi,",
  "tha-ap548:1.4_0": "kappe uppajji nāyako.",
  "tha-ap548:2.1_0": "Nāyakānaṁ varo satthā,",
  "tha-ap548:2.2_0": "guṇāguṇavidū jino;",
  "tha-ap548:2.3_0": "Kataññū katavedī ca,",
  "tha-ap548:2.4_0": "titthe yojeti pāṇine.",
  "tha-ap548:3.1_0": "Sabbaññutena ñāṇena,",
  "tha-ap548:3.2_0": "tulayitvā dayāsayo;",
  "tha-ap548:3.3_0": "Deseti pavaraṁ dhammaṁ,",
  "tha-ap548:3.4_0": "anantaguṇasañcayo.",
  "tha-ap548:4.1_0": "Sa kadāci mahāvīro,",
  "tha-ap548:4.2_0": "anantajinasaṁsari;",
  "tha-ap548:4.3_0": "Deseti madhuraṁ dhammaṁ,",
  "tha-ap548:4.4_0": "catusaccūpasañhitaṁ.",
  "tha-ap548:5.1_0": "Sutvāna taṁ dhammavaraṁ,",
  "tha-ap548:5.2_0": "ādimajjhantasobhanaṁ;",
  "tha-ap548:5.3_0": "Pāṇasatasahassānaṁ,",
  "tha-ap548:5.4_0": "dhammābhisamayo ahu.",
  "tha-ap548:6.1_0": "Ninnāditā tadā bhūmi,",
  "tha-ap548:6.2_0": "gajjiṁsu ca payodharā;",
  "tha-ap548:6.3_0": "Sādhukāraṁ pavattiṁsu,",
  "tha-ap548:6.4_0": "devabrahmanarāsurā.",
  "tha-ap548:7.1_0": "‘Aho kāruṇiko satthā,",
  "tha-ap548:7.2_0": "aho saddhammadesanā;",
  "tha-ap548:7.3_0": "Aho bhavasamuddamhi,",
  "tha-ap548:7.4_0": "nimugge uddharī jino’.",
  "tha-ap548:8.1_0": "Evaṁ pavedajātesu,",
  "tha-ap548:8.2_0": "sanarāmarabrahmasu;",
  "tha-ap548:8.3_0": "Kulappasādakānaggaṁ,",
  "tha-ap548:8.4_0": "sāvakaṁ vaṇṇayī jino.",
  "tha-ap548:9.1_0": "Tadāhaṁ haṁsavatiyaṁ,",
  "tha-ap548:9.2_0": "jātomaccakule ahuṁ;",
  "tha-ap548:9.3_0": "Pāsādiko dassaniyo,",
  "tha-ap548:9.4_0": "pahūtadhanadhaññavā.",
  "tha-ap548:10.1_0": "Haṁsārāmamupeccāhaṁ,",
  "tha-ap548:10.2_0": "vanditvā taṁ tathāgataṁ;",
  "tha-ap548:10.3_0": "Suṇitvā madhuraṁ dhammaṁ,",
  "tha-ap548:10.4_0": "kāraṁ katvā ca tādino.",
  "tha-ap548:11.1_0": "Nipacca pādamūlehaṁ,",
  "tha-ap548:11.2_0": "imaṁ vacanamabraviṁ;",
  "tha-ap548:11.3_0": "‘Kulappasādakānaggo,",
  "tha-ap548:11.4_0": "yo tayā santhuto mune.",
  "tha-ap548:12.1_0": "Tādiso homahaṁ vīra,",
  "tha-ap548:12.2_0": "buddhaseṭṭhassa sāsane’;",
  "tha-ap548:12.3_0": "Tadā mahākāruṇiko,",
  "tha-ap548:12.4_0": "siñcanto vāmatena maṁ.",
  "tha-ap548:13.1_0": "Āha maṁ ‘putta uttiṭṭha,",
  "tha-ap548:13.2_0": "lacchase taṁ manorathaṁ;",
  "tha-ap548:13.3_0": "Kathaṁ nāma jine kāraṁ,",
  "tha-ap548:13.4_0": "katvāna viphalo siyā.",
  "tha-ap548:14.1_0": "Satasahassito kappe,",
  "tha-ap548:14.2_0": "okkākakulasambhavo;",
  "tha-ap548:14.3_0": "Gotamo nāma gottena,",
  "tha-ap548:14.4_0": "satthā loke bhavissati.",
  "tha-ap548:15.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap548:15.2_0": "oraso dhammanimmito;",
  "tha-ap548:15.3_0": "Udāyi nāma nāmena,",
  "tha-ap548:15.4_0": "hessati satthu sāvako’.",
  "tha-ap548:16.1_0": "Taṁ sutvā mudito hutvā,",
  "tha-ap548:16.2_0": "yāvajīvaṁ tadā jinaṁ;",
  "tha-ap548:16.3_0": "Mettacitto paricariṁ,",
  "tha-ap548:16.4_0": "paccayehi vināyakaṁ.",
  "tha-ap548:17.1_0": "Tena kammavipākena,",
  "tha-ap548:17.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap548:17.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap548:17.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap548:18.1_0": "Pacchime ca bhave dāni,",
  "tha-ap548:18.2_0": "ramme kapilavatthave;",
  "tha-ap548:18.3_0": "Jāto mahāmaccakule,",
  "tha-ap548:18.4_0": "suddhodanamahīpate.",
  "tha-ap548:19.1_0": "Tadā ajāyi siddhattho,",
  "tha-ap548:19.2_0": "ramme lumbinikānane;",
  "tha-ap548:19.3_0": "Hitāya sabbalokassa,",
  "tha-ap548:19.4_0": "sukhāya ca narāsabho.",
  "tha-ap548:20.1_0": "Tadaheva ahaṁ jāto,",
  "tha-ap548:20.2_0": "saha teneva vaḍḍhito;",
  "tha-ap548:20.3_0": "Piyo sahāyo dayito,",
  "tha-ap548:20.4_0": "viyatto nītikovido.",
  "tha-ap548:21.1_0": "Ekūnatiṁso vayasā,",
  "tha-ap548:21.2_0": "nikkhamitvā agārato;",
  "tha-ap548:21.3_0": "Chabbassaṁ vītināmetvā,",
  "tha-ap548:21.4_0": "āsi buddho vināyako.",
  "tha-ap548:22.1_0": "Jetvā sasenakaṁ māraṁ,",
  "tha-ap548:22.2_0": "khepayitvāna āsave;",
  "tha-ap548:22.3_0": "Bhavaṇṇavaṁ taritvāna,",
  "tha-ap548:22.4_0": "buddho āsi sadevake.",
  "tha-ap548:23.1_0": "Isivhayaṁ gamitvāna,",
  "tha-ap548:23.2_0": "vinetvā pañcavaggiye;",
  "tha-ap548:23.3_0": "Tato vinesi bhagavā,",
  "tha-ap548:23.4_0": "gantvā gantvā tahiṁ tahiṁ.",
  "tha-ap548:24.1_0": "Veneyye vinayanto so,",
  "tha-ap548:24.2_0": "saṅgaṇhanto sadevakaṁ;",
  "tha-ap548:24.3_0": "Upecca magadhe giriṁ,",
  "tha-ap548:24.4_0": "viharittha tadā jino.",
  "tha-ap548:25.1_0": "Tadā suddhodanenāhaṁ,",
  "tha-ap548:25.2_0": "bhūmipālena pesito;",
  "tha-ap548:25.3_0": "Gantvā disvā dasabalaṁ,",
  "tha-ap548:25.4_0": "pabbajitvārahā ahuṁ.",
  "tha-ap548:26.1_0": "Tadā mahesiṁ yācitvā,",
  "tha-ap548:26.2_0": "pāpayiṁ kapilavhayaṁ;",
  "tha-ap548:26.3_0": "Tato purāhaṁ gantvāna,",
  "tha-ap548:26.4_0": "pasādesiṁ mahākulaṁ.",
  "tha-ap548:27.1_0": "Jino tasmiṁ guṇe tuṭṭho,",
  "tha-ap548:27.2_0": "maṁ mahāparisāya so;",
  "tha-ap548:27.3_0": "Kulappasādakānaggaṁ,",
  "tha-ap548:27.4_0": "paññāpesi vināyako.",
  "tha-ap548:28.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap548:28.2_0": "…pe…",
  "tha-ap548:28.3_0": "viharāmi anāsavo.",
  "tha-ap548:29.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap548:29.2_0": "…pe…",
  "tha-ap548:29.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap548:30.1_0": "Paṭisambhidā catasso,",
  "tha-ap548:30.2_0": "…pe…",
  "tha-ap548:30.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap548:31.1_0": "Itthaṁ sudaṁ āyasmā kāḷudāyī thero imā gāthāyo abhāsitthāti.",
  "tha-ap548:32.1_0": "Kāḷudāyittherassāpadānaṁ chaṭṭhaṁ."
}