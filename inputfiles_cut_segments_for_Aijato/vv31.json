{
  "vv31:0.1_0": "Vimānavatthu",
  "vv31:0.2_0": "Itthivimāna",
  "vv31:0.3_0": "Pāricchattakavagga",
  "vv31:0.4_0": "3. Pallaṅkavimānavatthu",
  "vv31:1.1_0": "“Pallaṅkaseṭṭhe maṇisoṇṇacitte,",
  "vv31:1.2_0": "Pupphābhikiṇṇe sayane uḷāre;",
  "vv31:1.3_0": "Tatthacchasi devi mahānubhāve,",
  "vv31:1.4_0": "Uccāvacā iddhi vikubbamānā.",
  "vv31:2.1_0": "Imā ca te accharāyo samantato,",
  "vv31:2.2_0": "Naccanti gāyanti pamodayanti;",
  "vv31:2.3_0": "Deviddhipattāsi mahānubhāve,",
  "vv31:2.4_0": "Manussabhūtā kimakāsi puññaṁ;",
  "vv31:2.5_0": "Kenāsi evaṁ jalitānubhāvā,",
  "vv31:2.6_0": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv31:3.1_0": "“Ahaṁ manussesu manussabhūtā,",
  "vv31:3.2_0": "Aḍḍhe kule suṇisā ahosiṁ;",
  "vv31:3.3_0": "Akkodhanā bhattuvasānuvattinī,",
  "vv31:3.4_0": "Uposathe appamattā ahosiṁ.",
  "vv31:4.1_0": "Manussabhūtā daharā apāpikā,",
  "vv31:4.2_0": "Pasannacittā patimābhirādhayiṁ;",
  "vv31:4.3_0": "Divā ca ratto ca manāpacārinī,",
  "vv31:4.4_0": "Ahaṁ pure sīlavatī ahosiṁ.",
  "vv31:5.1_0": "Pāṇātipātā viratā acorikā,",
  "vv31:5.2_0": "Saṁsuddhakāyā sucibrahmacārinī;",
  "vv31:5.3_0": "Amajjapā no ca musā abhāṇiṁ,",
  "vv31:5.4_0": "Sikkhāpadesu paripūrakārinī.",
  "vv31:6.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "vv31:6.2_0": "yā ca pakkhassa aṭṭhamī;",
  "vv31:6.3_0": "Pāṭihāriyapakkhañca,",
  "vv31:6.4_0": "pasannamānasā ahaṁ.",
  "vv31:7.1_0": "Aṭṭhaṅgupetaṁ anudhammacārinī,",
  "vv31:7.2_0": "Uposathaṁ pītimanā upāvasiṁ;",
  "vv31:7.3_0": "Imañca ariyaṁ aṭṭhaṅgavarehupetaṁ,",
  "vv31:7.4_0": "Samādiyitvā kusalaṁ sukhudrayaṁ;",
  "vv31:7.5_0": "Patimhi kalyāṇī vasānuvattinī,",
  "vv31:7.6_0": "Ahosiṁ pubbe sugatassa sāvikā.",
  "vv31:8.1_0": "Etādisaṁ kusalaṁ jīvaloke,",
  "vv31:8.2_0": "Kammaṁ karitvāna visesabhāginī;",
  "vv31:8.3_0": "Kāyassa bhedā abhisamparāyaṁ,",
  "vv31:8.4_0": "Deviddhipattā sugatimhi āgatā.",
  "vv31:9.1_0": "Vimānapāsādavare manorame,",
  "vv31:9.2_0": "Parivāritā accharāsaṅgaṇena;",
  "vv31:9.3_0": "Sayaṁpabhā devagaṇā ramenti maṁ,",
  "vv31:9.4_0": "Dīghāyukiṁ devavimānamāgatan”ti.",
  "vv31:10.1_0": "Pallaṅkavimānaṁ tatiyaṁ."
}