{
  "pv12:0.1_0": "Petavatthu",
  "pv12:0.2_0": "Uragavagga",
  "pv12:0.3_0": "12. Uragapetavatthu",
  "pv12:1.1_0": "“Uragova tacaṁ jiṇṇaṁ,",
  "pv12:1.2_0": "hitvā gacchati saṁ tanuṁ;",
  "pv12:1.3_0": "Evaṁ sarīre nibbhoge,",
  "pv12:1.4_0": "pete kālaṅkate sati.",
  "pv12:2.1_0": "Ḍayhamāno na jānāti,",
  "pv12:2.2_0": "ñātīnaṁ paridevitaṁ;",
  "pv12:2.3_0": "Tasmā etaṁ na rodāmi,",
  "pv12:2.4_0": "gato so tassa yā gati”.",
  "pv12:3.1_0": "“Anabbhito tato āgā,",
  "pv12:3.2_0": "nānuññāto ito gato;",
  "pv12:3.3_0": "Yathāgato tathā gato,",
  "pv12:3.4_0": "tattha kā paridevanā.",
  "pv12:4.1_0": "Ḍayhamāno na jānāti,",
  "pv12:4.2_0": "ñātīnaṁ paridevitaṁ;",
  "pv12:4.3_0": "Tasmā etaṁ na rodāmi,",
  "pv12:4.4_0": "gato so tassa yā gati”.",
  "pv12:5.1_0": "“Sace rode kisā assaṁ,",
  "pv12:5.2_0": "tattha me kiṁ phalaṁ siyā;",
  "pv12:5.3_0": "Ñātimittasuhajjānaṁ,",
  "pv12:5.4_0": "bhiyyo no aratī siyā.",
  "pv12:6.1_0": "Ḍayhamāno na jānāti,",
  "pv12:6.2_0": "ñātīnaṁ paridevitaṁ;",
  "pv12:6.3_0": "Tasmā etaṁ na rodāmi,",
  "pv12:6.4_0": "gato so tassa yā gati”.",
  "pv12:7.1_0": "“Yathāpi dārako candaṁ,",
  "pv12:7.2_0": "gacchantamanurodati;",
  "pv12:7.3_0": "Evaṁ sampadamevetaṁ,",
  "pv12:7.4_0": "yo petamanusocati.",
  "pv12:8.1_0": "Ḍayhamāno na jānāti,",
  "pv12:8.2_0": "ñātīnaṁ paridevitaṁ;",
  "pv12:8.3_0": "Tasmā etaṁ na rodāmi,",
  "pv12:8.4_0": "gato so tassa yā gati”.",
  "pv12:9.1_0": "“Yathāpi brahme udakumbho,",
  "pv12:9.2_0": "bhinno appaṭisandhiyo;",
  "pv12:9.3_0": "Evaṁ sampadamevetaṁ,",
  "pv12:9.4_0": "yo petamanusocati.",
  "pv12:10.1_0": "Ḍayhamāno na jānāti,",
  "pv12:10.2_0": "ñātīnaṁ paridevitaṁ;",
  "pv12:10.3_0": "Tasmā etaṁ na rodāmi,",
  "pv12:10.4_0": "gato so tassa yā gatī”ti.",
  "pv12:11.1_0": "Uragapetavatthu dvādasamaṁ.",
  "pv12:12.1_0": "Uragavaggo paṭhamo.",
  "pv12:13.1_0": "Tassuddānaṁ",
  "pv12:14.1_0": "Khettañca sūkaraṁ pūti,",
  "pv12:14.2_0": "piṭṭhaṁ cāpi tirokuṭṭaṁ;",
  "pv12:14.3_0": "Pañcāpi sattaputtañca,",
  "pv12:14.4_0": "goṇaṁ pesakārakañca;",
  "pv12:14.5_0": "Tathā khallāṭiyaṁ nāgaṁ,",
  "pv12:14.6_0": "dvādasaṁ uragañcevāti."
}