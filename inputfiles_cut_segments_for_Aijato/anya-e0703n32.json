{
  "anya-e0703n32:0_0": "Tettiṁsatima pariccheda",
  "anya-e0703n32:1_0": "Dasarājako",
  "anya-e0703n32:2_0": "1.",
  "anya-e0703n32:3_0": "Duṭṭhagāmaṇirañño tu, rajjeṭhitā janā ahū;",
  "anya-e0703n32:4_0": "Sālirājakumāroti, hassāsi vissuto suto.",
  "anya-e0703n32:5_0": "2.",
  "anya-e0703n32:6_0": "Atīva dhañño so āsi, puññakammarato sadā;",
  "anya-e0703n32:7_0": "Atīva cārurupāya, satto caṇḍāliyā ahu.",
  "anya-e0703n32:8_0": "3.",
  "anya-e0703n32:9_0": "Asokamālādeviṁtaṁ, sambandhaṁ pubbajātiyā;",
  "anya-e0703n32:10_0": "Rūpenā’ti piyāyanto, so rajjaṁ nevakāmayi.",
  "anya-e0703n32:11_0": "4.",
  "anya-e0703n32:12_0": "Duṭṭhagāmaṇibhātā’so, saddhātisso tadacchaye;",
  "anya-e0703n32:13_0": "Rajjaṁ kāressā’bhisitto, aṭṭhārassa samā’samo.",
  "anya-e0703n32:14_0": "5.",
  "anya-e0703n32:15_0": "Chakkakammaṁ sudhākammaṁ, hatthipākārameva ca;",
  "anya-e0703n32:16_0": "Mahāthūpassa kāresi, so saddhākatanāmako.",
  "anya-e0703n32:17_0": "6.",
  "anya-e0703n32:18_0": "Dīpena lohapāsādo, uḍḍiyhittha susaṅkhato;",
  "anya-e0703n32:19_0": "Kāresi lohapāsādaṁ, puna so sattabhūmakaṁ.",
  "anya-e0703n32:20_0": "7.",
  "anya-e0703n32:21_0": "Navutisatasahassaggho, pāsādo āsi so tadā;",
  "anya-e0703n32:22_0": "Dakkhiṇagīrivihāraṁ, kallakaleṇa meva ca.",
  "anya-e0703n32:23_0": "8.",
  "anya-e0703n32:24_0": "Kuḷumbālavihārañca, tathāpettaṅga vālikaṁ;",
  "anya-e0703n32:25_0": "Velaṅgavaṭṭikañceva, dubbalavāpitissataṁ.",
  "anya-e0703n32:26_0": "9.",
  "anya-e0703n32:27_0": "Duratissakavāpiñca, tathāmātuvihārakaṁ;",
  "anya-e0703n32:28_0": "Kāresi ādīghavāpiṁ, vihāraṁyojana yojane.",
  "anya-e0703n32:29_0": "10.",
  "anya-e0703n32:30_0": "Dīghavāpivihārañca, kāresi sahacetiyaṁ;",
  "anya-e0703n32:31_0": "Nānāratanakacchannaṁ, tattha kāresi cetiye.",
  "anya-e0703n32:32_0": "11.",
  "anya-e0703n32:33_0": "Sandhiyaṁ sandhiyaṁ tattha, rathacakkappamāṇakaṁ;",
  "anya-e0703n32:34_0": "Sovaṇṇamālaṁ kāretvā, laggāpesi manoramaṁ.",
  "anya-e0703n32:35_0": "12.",
  "anya-e0703n32:36_0": "Caturāsītisahassānaṁ , dhammakkhandhānamissaro;",
  "anya-e0703n32:37_0": "Caturāsītisahassāni, pūjācāpi akārayi.",
  "anya-e0703n32:38_0": "13.",
  "anya-e0703n32:39_0": "Evaṁ puññāni katvā so, anekāni mahīpati;",
  "anya-e0703n32:40_0": "Kāyassabhedā devesu, tusitesu’papajjatha.",
  "anya-e0703n32:41_0": "14.",
  "anya-e0703n32:42_0": "Saddhātissapakārāje, vasante dīghavāpiyaṁ;",
  "anya-e0703n32:43_0": "Lajjītisso jeṭṭhasuto, girikumbhimanāmakaṁ.",
  "anya-e0703n32:44_0": "15.",
  "anya-e0703n32:45_0": "Vihāraṁ kārayi rammaṁ, taṁkaniṭṭhasuto pana;",
  "anya-e0703n32:46_0": "Thullatthano akāresi, vihāraṁ kandaravhayaṁ.",
  "anya-e0703n32:47_0": "16.",
  "anya-e0703n32:48_0": "Pitarā thullatthanako, bhātusantikamāyatā;",
  "anya-e0703n32:49_0": "Sahevā’ha vihārassa, saṅghabhogatthamattano.",
  "anya-e0703n32:50_0": "17.",
  "anya-e0703n32:51_0": "Saddhātisseuparate, sabbe’maccā samāgatā;",
  "anya-e0703n32:52_0": "Thūpārāme bhikkhusaṅghaṁ, sakalaṁ sannipātiya.",
  "anya-e0703n32:53_0": "18.",
  "anya-e0703n32:54_0": "Saṅghānuññāyaraṭṭhassa, rakkhaṇatthaṁ kumārakaṁ;",
  "anya-e0703n32:55_0": "Abhisiñcuṁ thullatthanaṁ, taṁ sutvā lajjītissato.",
  "anya-e0703n32:56_0": "19.",
  "anya-e0703n32:57_0": "Idhāgantvā gahetvā taṁ, sayaṁ rajjamakārayi;",
  "anya-e0703n32:58_0": "Māsañceva dasāhañca, rājā thullatthano pana.",
  "anya-e0703n32:59_0": "20.",
  "anya-e0703n32:60_0": "Tissosamaṁ lajjītisso, saṅgho hutvā anādaro;",
  "anya-e0703n32:61_0": "‘‘Na jāniṁsu yathāvuḍḍhaṁ’’ mīti taṁ paribhāsayi.",
  "anya-e0703n32:62_0": "21.",
  "anya-e0703n32:63_0": "Pacchā saṅghaṁ khamāpetvā, daṇḍakammatthamissaro;",
  "anya-e0703n32:64_0": "Tīṇi satasahassāni, datvāna urucetiye.",
  "anya-e0703n32:65_0": "22.",
  "anya-e0703n32:66_0": "Silāmayāni kāresi, pupphayānāni tīṇiso;",
  "anya-e0703n32:67_0": "Atho satasahassena, citāpesi ca antarā.",
  "anya-e0703n32:68_0": "23.",
  "anya-e0703n32:69_0": "Mahāthūpathūpārāmānaṁ, bhūmiṁbhūmissaro samaṁ;",
  "anya-e0703n32:70_0": "Thūpārāme ca thūpassa, silākañcuka muttamaṁ.",
  "anya-e0703n32:71_0": "24.",
  "anya-e0703n32:72_0": "Thūpārāmassa purato, silāthūpakameva ca;",
  "anya-e0703n32:73_0": "Lajjīkāsanasālañca, bhikkhusaṅghassa kārayi.",
  "anya-e0703n32:74_0": "25.",
  "anya-e0703n32:75_0": "Kañcukaṁ kaṇṭake thūpe, kārāpesi silāmayaṁ;",
  "anya-e0703n32:76_0": "Datvāna satasahassaṁ, vihāre cetiyavhaye.",
  "anya-e0703n32:77_0": "26.",
  "anya-e0703n32:78_0": "Girikumbhilanāmassa, vihārassa mahamhi so;",
  "anya-e0703n32:79_0": "Saṭṭhibhikkhusahassānaṁ, ticīvaramadāpayi.",
  "anya-e0703n32:80_0": "27.",
  "anya-e0703n32:81_0": "Ariṭṭhavihāraṁ kāresi, tathākandarahinakaṁ;",
  "anya-e0703n32:82_0": "Gāmikānañca bhikkhūnaṁ, bhesajjāni adāpayi.",
  "anya-e0703n32:83_0": "28.",
  "anya-e0703n32:84_0": "Kimicchakaṁ taṇḍulañca, bhikkhunīnamadāpayi;",
  "anya-e0703n32:85_0": "Samānava’ṭhamāsañca, rajjaṁ so kārayī idha.",
  "anya-e0703n32:86_0": "29.",
  "anya-e0703n32:87_0": "Mate lajjikatissamhi, kaniṭṭho tassa kārayi;",
  "anya-e0703n32:88_0": "Rajjaṁ chaḷeva vassāni, khallāṭanāganāmako.",
  "anya-e0703n32:89_0": "30.",
  "anya-e0703n32:90_0": "Lohapāsādaparivāre, pāsāde’ti manorame;",
  "anya-e0703n32:91_0": "Lohapāsādasobhatthaṁ, eso dvattiṁsakārayi.",
  "anya-e0703n32:92_0": "31.",
  "anya-e0703n32:93_0": "Mahāthūpassa parito, cāruno hemamālino;",
  "anya-e0703n32:94_0": "Vālikaṅgaṇamariyādaṁ, pākārañca akārayi.",
  "anya-e0703n32:95_0": "32.",
  "anya-e0703n32:96_0": "Sovakurundapāsakaṁ, vihārañca akārayi;",
  "anya-e0703n32:97_0": "Puññakammānicaññāni, kārāpesi mahīpati.",
  "anya-e0703n32:98_0": "33.",
  "anya-e0703n32:99_0": "Taṁ mahārattatonāma, senāpati mahīpatiṁ;",
  "anya-e0703n32:100_0": "Khallāṭanāgarājānaṁ, nagareyeva aggahi.",
  "anya-e0703n32:101_0": "34.",
  "anya-e0703n32:102_0": "Tassa rañño kaniṭṭhotu, vaṭṭagāmaṇināmako;",
  "anya-e0703n32:103_0": "Taṁ duṭṭhasenāpatikaṁ, hantvā rajjamakārayi.",
  "anya-e0703n32:104_0": "35.",
  "anya-e0703n32:105_0": "Khallāṭanāgaraññoso, puttakaṁ sakabhātuno;",
  "anya-e0703n32:106_0": "Mahācūlikanāmānaṁ, puttaṭhāne ṭhapesi ca.",
  "anya-e0703n32:107_0": "36.",
  "anya-e0703n32:108_0": "Tammātaraṁ nuḷādeviṁ, mahesiñca akāsiso;",
  "anya-e0703n32:109_0": "Pītiṭhāne ṭhitatā’ssa, pītirājāti abravuṁ.",
  "anya-e0703n32:110_0": "37.",
  "anya-e0703n32:111_0": "Evaṁ rajje’bhisittassa, tassa māsamhi pañcame;",
  "anya-e0703n32:112_0": "Rohaṇe nakulanagare, eko brāhmaṇaceṭato.",
  "anya-e0703n32:113_0": "38.",
  "anya-e0703n32:114_0": "Tiyo nāma brāhmaṇassa, vaco sutvā apaṇḍito;",
  "anya-e0703n32:115_0": "Coro asu mahātassa, parivāro ahosi ca.",
  "anya-e0703n32:116_0": "39.",
  "anya-e0703n32:117_0": "Sagaṇāsattadamiḷā, mahātitthamhi otaruṁ;",
  "anya-e0703n32:118_0": "Tadā brāhmaṇatiyo ca, te sattadamiḷāpica.",
  "anya-e0703n32:119_0": "40.",
  "anya-e0703n32:120_0": "Chakkatthāya visajjesuṁ, lekhaṁ bhūpatisantikaṁ;",
  "anya-e0703n32:121_0": "Rājā brāhmaṇatiyassa, lekhaṁ pesesi nītimā.",
  "anya-e0703n32:122_0": "41.",
  "anya-e0703n32:123_0": "‘‘Rajjaṁ tava idāneva, gaṇha tvaṁ damiḷe’’ iti;",
  "anya-e0703n32:124_0": "Sādhūti so damiḷehi, yujjhi gaṇhiṁsu te tu taṁ.",
  "anya-e0703n32:125_0": "42.",
  "anya-e0703n32:126_0": "Tato te damiḷā yuddhaṁ, raññā saha pavattayuṁ;",
  "anya-e0703n32:127_0": "Koḷambālakasāmantā, yuddhe rājā parājito.",
  "anya-e0703n32:128_0": "43.",
  "anya-e0703n32:129_0": "Titthārāmaduvārena, rathāruḷho palāyati;",
  "anya-e0703n32:130_0": "Paṇḍukābhayarājena, titthārāmohi kārito;",
  "anya-e0703n32:131_0": "Vāsito ca tadā āsi, ekavīsati rājusū.",
  "anya-e0703n32:132_0": "44.",
  "anya-e0703n32:133_0": "Taṁ disvā palāyantaṁ, nigaṇṭhogirināmako;",
  "anya-e0703n32:134_0": "‘‘Palāyati mahākāḷa-sīhaḷo’’ti bhusaṁ ravi.",
  "anya-e0703n32:135_0": "45.",
  "anya-e0703n32:136_0": "Taṁ sutvāna mahārājā, ‘‘siddhe mama manorathe;",
  "anya-e0703n32:137_0": "Vihāraṁ ettha kāressaṁ’’, iccevaṁ cintayī tadā.",
  "anya-e0703n32:138_0": "46.",
  "anya-e0703n32:139_0": "Sagabbhaṁ anulādeviṁ, aggahī rakkhiyā iti;",
  "anya-e0703n32:140_0": "Mahācūḷa mahānāga-kumārecāpī rakkhiye.",
  "anya-e0703n32:141_0": "47.",
  "anya-e0703n32:142_0": "Rathassa lahubhāvatthaṁ, ḍatvā cūḷāmaṇiṁsubhaṁ;",
  "anya-e0703n32:143_0": "Otāresi somadeviṁ, tassa’nuññāya bhūpati.",
  "anya-e0703n32:144_0": "48.",
  "anya-e0703n32:145_0": "Yuddhāyagamaneyeva, puttake dve ca deviyo;",
  "anya-e0703n32:146_0": "Gāhayitvāna nikkhanto, saṅkito so parājaye.",
  "anya-e0703n32:147_0": "49.",
  "anya-e0703n32:148_0": "Asakkuṇitvā gāhetuṁ, pattaṁ bhuttaṁ jinena taṁ;",
  "anya-e0703n32:149_0": "Palāyitvā vessagīri-vane abhiniyiyiso.",
  "anya-e0703n32:150_0": "50.",
  "anya-e0703n32:151_0": "Kutthikkulamahātissa-thero disvā tahaṁ tu taṁ;",
  "anya-e0703n32:152_0": "Bhattaṁ pādā anāmaṭṭhaṁ, piṇḍadānaṁ vivajjiya.",
  "anya-e0703n32:153_0": "51.",
  "anya-e0703n32:154_0": "Atha ketakipattamhi, likhitvā haṭṭhamānaso;",
  "anya-e0703n32:155_0": "Saṅghabhogaṁ vihārassa, tassa pādāmahīpati.",
  "anya-e0703n32:156_0": "52.",
  "anya-e0703n32:157_0": "Tato gantvā silāsobbha-kaṇḍakamhi vasī tato;",
  "anya-e0703n32:158_0": "Gantvāna mātuvelaṅge, sālagalasamīpago.",
  "anya-e0703n32:159_0": "53.",
  "anya-e0703n32:160_0": "Tatthaddasa diṭṭhapubbaṁ, theraṁ thero mahīpatiṁ;",
  "anya-e0703n32:161_0": "Upaṭṭhākassa appesi, tanasivassa sādhukaṁ.",
  "anya-e0703n32:162_0": "54.",
  "anya-e0703n32:163_0": "Tassa so tanasivassa, raṭṭhikassa’ntike tahiṁ;",
  "anya-e0703n32:164_0": "Rājā cuddasavassāni, vasī tena upaṭṭhito.",
  "anya-e0703n32:165_0": "55.",
  "anya-e0703n32:166_0": "Sattasu damīḷesve’ko, somādeviṁ madāvahaṁ;",
  "anya-e0703n32:167_0": "Rāgaratto gahetvāna, paratīramagālahuṁ.",
  "anya-e0703n32:168_0": "56.",
  "anya-e0703n32:169_0": "Ekopattaṁ dasabalassa, anurādhapure ṭhitaṁ;",
  "anya-e0703n32:170_0": "Ādāya tena santuṭṭho, paratīramagālahuṁ.",
  "anya-e0703n32:171_0": "57.",
  "anya-e0703n32:172_0": "Puḷahattho tu damiḷo, tīṇivassāni kārayi;",
  "anya-e0703n32:173_0": "Rajjaṁ senāpatiṁ katvā, damiḷaṁ bāhiyavhayaṁ.",
  "anya-e0703n32:174_0": "58.",
  "anya-e0703n32:175_0": "Puḷahatthaṁ gahetvā taṁ, dūre vassāni bāhīyo;",
  "anya-e0703n32:176_0": "Rajjaṁ kāresi tassā’si, paṇayamāro camūpati.",
  "anya-e0703n32:177_0": "59.",
  "anya-e0703n32:178_0": "Bāhīyaṁ taṁ gahetvāna, rājā’si paṇayamārako;",
  "anya-e0703n32:179_0": "Sattavassāni tassā’si, piḷayamāro camūpati.",
  "anya-e0703n32:180_0": "60.",
  "anya-e0703n32:181_0": "Paṇayamāraṁ gahetvā so, rājāsi pīḷayamārako;",
  "anya-e0703n32:182_0": "Sattamāsāni tassāsi, dāṭhiyo tu camūpati.",
  "anya-e0703n32:183_0": "61.",
  "anya-e0703n32:184_0": "Pīḷayamāraṁ gahetvā so, dāṭhiyo damiḷo pana;",
  "anya-e0703n32:185_0": "Rajjaṁ’nurādhanagare, duve vassāni kārayi.",
  "anya-e0703n32:186_0": "62.",
  "anya-e0703n32:187_0": "Evaṁ damiḷarājūnaṁ, tesaṁ pañcannamevahi;",
  "anya-e0703n32:188_0": "Honti cuddasavassānī, sattamāsā ca uttariṁ.",
  "anya-e0703n32:189_0": "63.",
  "anya-e0703n32:190_0": "Gatāya tu nivāsatthaṁ, malaye’nuladeviyā;",
  "anya-e0703n32:191_0": "Bhariyākanasivassa, pādāpahari pacchiyaṁ.",
  "anya-e0703n32:192_0": "64.",
  "anya-e0703n32:193_0": "Kujjhitvā rodamānāsā, rājānaṁ upasakimi;",
  "anya-e0703n32:194_0": "Taṁ sutvā tanasivoso, manumādāya nikkhami.",
  "anya-e0703n32:195_0": "65.",
  "anya-e0703n32:196_0": "Deviyā vacanaṁ sutvā, tassa āgamanā purā;",
  "anya-e0703n32:197_0": "Dviputtaṁ devimādāya, tato rājā’pi nikkhami.",
  "anya-e0703n32:198_0": "66.",
  "anya-e0703n32:199_0": "Dhanuṁ sandhāya āyantaṁ, sīvaṁ vijjhi mahāsīvo;",
  "anya-e0703n32:200_0": "Rājā nāmaṁ bhāvayitvā, akāsi jinasaṅgahaṁ.",
  "anya-e0703n32:201_0": "67.",
  "anya-e0703n32:202_0": "Alattha aṭṭhāmacceca, mahante yodhasammate;",
  "anya-e0703n32:203_0": "Parivāro mahāāsī, parihāro ca rājino.",
  "anya-e0703n32:204_0": "68.",
  "anya-e0703n32:205_0": "Kumbhīlakamahātissa-thera disvā mahāyaso;",
  "anya-e0703n32:206_0": "Acchagallavihāramhi, buddhapūjamakārayi.",
  "anya-e0703n32:207_0": "69.",
  "anya-e0703n32:208_0": "Vatthuṁ sodhetumāruḷho, akāsacetiyaṅgaṇaṁ;",
  "anya-e0703n32:209_0": "Kavisīse amaccamhi, orohantomahīpati.",
  "anya-e0703n32:210_0": "70.",
  "anya-e0703n32:211_0": "Ārohanto sadeviko, disvā magge nisinnakaṁ;",
  "anya-e0703n32:212_0": "‘‘Na nipanno’’ti kujjhitvā, kavisīsaṁ aghātayi.",
  "anya-e0703n32:213_0": "71.",
  "anya-e0703n32:214_0": "Sesā sattaamaccāvi, nibbinnā tena rājinā;",
  "anya-e0703n32:215_0": "Tassa’ntikā palāyitvā, pakkamantā yathāruci.",
  "anya-e0703n32:216_0": "72.",
  "anya-e0703n32:217_0": "Magge viluttā corehi, vihāraṁ hambugallakaṁ;",
  "anya-e0703n32:218_0": "Pavisitvāna addakkhuṁ, tissattheraṁ bahussutaṁ.",
  "anya-e0703n32:219_0": "73.",
  "anya-e0703n32:220_0": "Catunekāyiko thero, yathāladdhāni dāpayi;",
  "anya-e0703n32:221_0": "Vatthaphāṇitatelāni, taṇḍulā pāhuṇā tathā.",
  "anya-e0703n32:222_0": "74.",
  "anya-e0703n32:223_0": "Assatthakāle thero so,",
  "anya-e0703n32:224_0": "‘‘Kuhiṁyātā’’ti pucchite;",
  "anya-e0703n32:225_0": "Attānaṁ āvīkatvā te,",
  "anya-e0703n32:226_0": "Taṁ pavattiṁ nivedayuṁ.",
  "anya-e0703n32:227_0": "75.",
  "anya-e0703n32:228_0": "‘‘Kāretuṁ kehi sakkā nu, jinasāsanapaggahaṁ;",
  "anya-e0703n32:229_0": "Damiḷehi vā’tha raññā, iti puṭṭhā tu te pana.",
  "anya-e0703n32:230_0": "76.",
  "anya-e0703n32:231_0": "‘‘Rañño sakkā’’ti āhaṁsu, saññāpetvāna te iti;",
  "anya-e0703n32:232_0": "Ubho tissa mahātissa-therā ādāya te tato.",
  "anya-e0703n32:233_0": "77.",
  "anya-e0703n32:234_0": "Rājino santikaṁ netvā, aññamaññaṁ khamāpayuṁ;",
  "anya-e0703n32:235_0": "Rājā ca te amaccā ca, thero eva mayācayuṁ.",
  "anya-e0703n32:236_0": "78.",
  "anya-e0703n32:237_0": "Siddhe kamme pesiteno, gantabbaṁ santikaṁ iti;",
  "anya-e0703n32:238_0": "Therā datvā paṭiññaṁ te, yathāṭhānamagañchisuṁ.",
  "anya-e0703n32:239_0": "79.",
  "anya-e0703n32:240_0": "Anurādhapuraṁ rājā, āgantvāna mahāyaso;",
  "anya-e0703n32:241_0": "Dāṭhikaṁ damiḷaṁ hantvā, sayaṁ rajjamakārayi.",
  "anya-e0703n32:242_0": "80.",
  "anya-e0703n32:243_0": "Tato nigaṇṭhārāmaṁ taṁ, viddhaṁsetvā mahīpati;",
  "anya-e0703n32:244_0": "Vihāraṁ kārayi tattha, dvādasa pariveṇakaṁ.",
  "anya-e0703n32:245_0": "81.",
  "anya-e0703n32:246_0": "Mahāvihārapaṭṭhānā, dvīsu vassasa tesu ca;",
  "anya-e0703n32:247_0": "Sattarasasu vassesu, dasamāsā’mikesu ca.",
  "anya-e0703n32:248_0": "82.",
  "anya-e0703n32:249_0": "Tathā dinesu dasasu, atikkantesu sādaro;",
  "anya-e0703n32:250_0": "Abhayagiri vihāraṁso, patiṭṭhāpesi bhūpati.",
  "anya-e0703n32:251_0": "83.",
  "anya-e0703n32:252_0": "Akkosiyitvā te there, tesu pubbupakārino;",
  "anya-e0703n32:253_0": "Taṁ mahātissa therassa, vihāraṁ mānado adā.",
  "anya-e0703n32:254_0": "84.",
  "anya-e0703n32:255_0": "Girissa yasmā gārāme, rājā kāresi sobhayo;",
  "anya-e0703n32:256_0": "Tasmā’bhaya giritveva, vihāro nāmako ahu.",
  "anya-e0703n32:257_0": "85.",
  "anya-e0703n32:258_0": "Āṇāpetvā somādeviṁ,",
  "anya-e0703n32:259_0": "Yathā ṭhāne ṭhapesiso;",
  "anya-e0703n32:260_0": "Tassātannāmakaṁ katvā,",
  "anya-e0703n32:261_0": "Somārāma makārayi.",
  "anya-e0703n32:262_0": "86.",
  "anya-e0703n32:263_0": "Rathā oropitā sā hi, tasmiṁṭhāne varaṅganā;",
  "anya-e0703n32:264_0": "Kaddambapuppha gumbamhi, nilinā tattha addasa.",
  "anya-e0703n32:265_0": "87.",
  "anya-e0703n32:266_0": "Muttayantaṁ sāmaṇeraṁ, maggaṁ hatthena chādiya;",
  "anya-e0703n32:267_0": "Rājā tassa vaco sutvā, vihāraṁ tattha kārayi.",
  "anya-e0703n32:268_0": "88.",
  "anya-e0703n32:269_0": "Mahāthūpassuttarato,",
  "anya-e0703n32:270_0": "Cetiyaṁ uccavatthukaṁ;",
  "anya-e0703n32:271_0": "Silā sobhakaṇḍakaṁ nāma,",
  "anya-e0703n32:272_0": "Rājā soyeva kārayi.",
  "anya-e0703n32:273_0": "89.",
  "anya-e0703n32:274_0": "Tesu sattasu yodhesu, uttiyo nāma kārayi;",
  "anya-e0703n32:275_0": "Nagaramhā dakkhiṇato, vihāraṁ dakkhiṇavhayaṁ.",
  "anya-e0703n32:276_0": "90.",
  "anya-e0703n32:277_0": "Tatteva mūlavokāsa, vīhāraṁ mūlanāmako;",
  "anya-e0703n32:278_0": "Amacco kārayī tena, sopi taṁnāmako ahu.",
  "anya-e0703n32:279_0": "91.",
  "anya-e0703n32:280_0": "Kāresi sāliyārāmaṁ, amacco sāliyavhayo;",
  "anya-e0703n32:281_0": "Kāresi pabbatārāmaṁ, amacco pabbatavhayo.",
  "anya-e0703n32:282_0": "92.",
  "anya-e0703n32:283_0": "Uttaratissarāmantu, tissāmacco akārayi;",
  "anya-e0703n32:284_0": "Vihāre niṭṭhite ramme, tissathera mupaccate.",
  "anya-e0703n32:285_0": "93.",
  "anya-e0703n32:286_0": "‘‘Tumhākaṁ paṭisanthāra, vasena’mhehi kārite;",
  "anya-e0703n32:287_0": "Vihāre dema tumhākaṁ, iti vatvā adaṁsu ca.",
  "anya-e0703n32:288_0": "94.",
  "anya-e0703n32:289_0": "Thero sabbatthavāsesi, te te bhikkhū yathā rahaṁ;",
  "anya-e0703n32:290_0": "Amaccā’daṁsu saṅghassa, vividhe samaṇārahe.",
  "anya-e0703n32:291_0": "95.",
  "anya-e0703n32:292_0": "Rājā sakavihāramhi, vasante samupaṭṭhahi;",
  "anya-e0703n32:293_0": "Paccayehi anunehi, tena te bahavo ahuṁ.",
  "anya-e0703n32:294_0": "96.",
  "anya-e0703n32:295_0": "Theraṁ kulehī saṁsaṭṭhaṁ, mahātissoti vissutaṁ;",
  "anya-e0703n32:296_0": "Kulasaṁsaṭṭha dosena, saṅgho taṁ nīhari ito.",
  "anya-e0703n32:297_0": "97.",
  "anya-e0703n32:298_0": "Tassa sisso bahalamassu-",
  "anya-e0703n32:299_0": "Tissattheroti pissuto;",
  "anya-e0703n32:300_0": "Kuddho’bhayagiriṁ gantvā,",
  "anya-e0703n32:301_0": "Vasi pakkhaṁ vahaṁ tahiṁ.",
  "anya-e0703n32:302_0": "98.",
  "anya-e0703n32:303_0": "Tatoppabhuti te bhikkhū, mahāvihāranāgamuṁ;",
  "anya-e0703n32:304_0": "Evaṁ te’bhayagirikā, niggatā theravādato.",
  "anya-e0703n32:305_0": "99.",
  "anya-e0703n32:306_0": "Pabhinnā’bhayagirikehi, dakkhiṇavihārikāyati;",
  "anya-e0703n32:307_0": "Evaṁ te theravādīhi, pabhinnā bhikkhavo dvidhā.",
  "anya-e0703n32:308_0": "100.",
  "anya-e0703n32:309_0": "Mahā abhayabhikkhū te, vaḍḍhetuṁ dīpavāsino;",
  "anya-e0703n32:310_0": "Vaṭṭagāmaṇibhūmindo, pattiṁ nāma adāsi so.",
  "anya-e0703n32:311_0": "101.",
  "anya-e0703n32:312_0": "Vihārapariveṇāni, ghaṭābaddhe akārayi;",
  "anya-e0703n32:313_0": "‘‘Paṭisaṅkharaṇaṁ evaṁ, hessatīti vicintiya.",
  "anya-e0703n32:314_0": "102.",
  "anya-e0703n32:315_0": "Piṭakattayapāḷiñca, tassa aṭṭhakathampi ca;",
  "anya-e0703n32:316_0": "Mukhapāṭhena ānesuṁ, pubbe bhikkhū mahāmati.",
  "anya-e0703n32:317_0": "103.",
  "anya-e0703n32:318_0": "Hāniṁ disvāna sattānaṁ, tadā bhikkhū samāgatā;",
  "anya-e0703n32:319_0": "Ciraṭṭhitatthaṁ dhammassa, potthakesu likhāpayuṁ.",
  "anya-e0703n32:320_0": "104.",
  "anya-e0703n32:321_0": "Vaṭṭagāmaṇi abhayo, rājā rajjamakārayi;",
  "anya-e0703n32:322_0": "Iti dvādasavassāni, pañcamāsesu ādito.",
  "anya-e0703n32:323_0": "105.",
  "anya-e0703n32:324_0": "Itī parahita mattano hitañca,",
  "anya-e0703n32:325_0": "Paṭilabhiyissariyaṁ karoti pañño;",
  "anya-e0703n32:326_0": "Vipulamapi kubuddhiladdhabhovaṁ,",
  "anya-e0703n32:327_0": "Ubhayahitaṁ na karoti bhogaluddho’ti.",
  "anya-e0703n32:328_0": "Sujanappasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n32:329_0": "Dasarājako nāma",
  "anya-e0703n32:330_0": "Tettiṁsatimo paricchedo."
}