{
  "anya-e1009n6:0_0": "Paññā-niddesa",
  "anya-e1009n6:1_0": "55.",
  "anya-e1009n6:2_0": " Paññaṁ pathamamesehi,",
  "anya-e1009n6:3_0": "Paññā-balaṁ bahuttamaṁ;",
  "anya-e1009n6:4_0": "Kula-putta balaṁ paññā,",
  "anya-e1009n6:5_0": "Kiṁhināma na sādhyati.",
  "anya-e1009n6:6_0": "56.",
  "anya-e1009n6:7_0": " Aneka-saṁsayucchedi ,",
  "anya-e1009n6:8_0": "Parokkhatthassa dassakaṁ;",
  "anya-e1009n6:9_0": "Sabbassa locanaṁ satthaṁ,",
  "anya-e1009n6:10_0": "Yassa natthyandhameva so.",
  "anya-e1009n6:11_0": "57.",
  "anya-e1009n6:12_0": " Paññā sutaṁ vinicchindi,",
  "anya-e1009n6:13_0": "Kitti-siloka-vaḍḍhanī;",
  "anya-e1009n6:14_0": "Paññāsahito naro idha,",
  "anya-e1009n6:15_0": "Api sukhānivindati.",
  "anya-e1009n6:16_0": "58.",
  "anya-e1009n6:17_0": " Sabbaññubuddha-pacceka ,",
  "anya-e1009n6:18_0": "Catusacca-sutā iti;",
  "anya-e1009n6:19_0": "Catu-buddhesu ekova,",
  "anya-e1009n6:20_0": "Bahussuto naro bhave.",
  "anya-e1009n6:21_0": "59.",
  "anya-e1009n6:22_0": " Lekhacheko vācacheko,",
  "anya-e1009n6:23_0": "Ganthacheko suvācako;",
  "anya-e1009n6:24_0": "Vidhāyakacheko sūro,",
  "anya-e1009n6:25_0": "Niddukkhova sakammani.",
  "anya-e1009n6:26_0": "60.",
  "anya-e1009n6:27_0": " Paññā hi seṭṭhā kusalā vadanti,",
  "anya-e1009n6:28_0": "Nakkhatta-rājāriva tārakānaṁ;",
  "anya-e1009n6:29_0": "Sīlaṁ sirīcāpi satañca dhammo,",
  "anya-e1009n6:30_0": "Anvāyikā paññāvato bhavanti.",
  "anya-e1009n6:31_0": "61.",
  "anya-e1009n6:32_0": " Sevetha buddhe nipuṇe bahussutte,",
  "anya-e1009n6:33_0": "Uggāhako ca paripucchako;",
  "anya-e1009n6:34_0": "Suṇeyya sakkaccaṁ subhāsitāni,",
  "anya-e1009n6:35_0": "Evaṁ karo paññavā hoti macco.",
  "anya-e1009n6:36_0": "62.",
  "anya-e1009n6:37_0": " Vayena yasa-pucchāhi,",
  "anya-e1009n6:38_0": "Tiṭṭha-vāsena yoniso;",
  "anya-e1009n6:39_0": "Sākacchā snehasaṁsevā,",
  "anya-e1009n6:40_0": "Patirūpa-vāsenaca.",
  "anya-e1009n6:41_0": "63.",
  "anya-e1009n6:42_0": " Etāni aṭṭhaṭhānāni,",
  "anya-e1009n6:43_0": "Buddhi-visada-kāraṇā;",
  "anya-e1009n6:44_0": "Yesaṁ etāni sambhonti,",
  "anya-e1009n6:45_0": "Tesaṁ buddhi pabhijjati.",
  "anya-e1009n6:46_0": "64.",
  "anya-e1009n6:46_1": "Cattārome bhikkhave dhammā paññāvuddhiyā saṁvattanti. Katame cattāro.",
  "anya-e1009n6:46_2": "Sappurisasaṁsevo saddhammasavanaṁ yoniso manasikāro dhammānudhamma-paṭipatti.",
  "anya-e1009n6:46_3": "Ime kho bhikkhave cattāro dhammā paññā-vuddhiyā saṁvattantītti.",
  "anya-e1009n6:47_0": "65.",
  "anya-e1009n6:48_0": " Cakkhupasāda-sampanno ,",
  "anya-e1009n6:49_0": "Acchimantañca passati;",
  "anya-e1009n6:50_0": "Andhaṁ kāṇaṁ su-passantaṁ,",
  "anya-e1009n6:51_0": "Andho sabbaṁ na passati.",
  "anya-e1009n6:52_0": "66.",
  "anya-e1009n6:53_0": " Passatti passo passantaṁ,",
  "anya-e1009n6:54_0": "A-passantañca passati;",
  "anya-e1009n6:55_0": "A-passanto a-passantaṁ,",
  "anya-e1009n6:56_0": "Passantañca na passati.",
  "anya-e1009n6:57_0": "67.",
  "anya-e1009n6:58_0": " Pākaṭaṁ a-paṭicchannaṁ,",
  "anya-e1009n6:59_0": "Rūpaṁ pasāda-cakkhunā;",
  "anya-e1009n6:60_0": "Nāññaṁ passatti sabbaṁpi,",
  "anya-e1009n6:61_0": "Tathato ñāṇa-cakkhunā.",
  "anya-e1009n6:62_0": "68.",
  "anya-e1009n6:63_0": " Sujanāsujanā sabbe,",
  "anya-e1009n6:64_0": "Guṇenāpi vivekino;",
  "anya-e1009n6:65_0": "Vivekaṁ na samāyanti,",
  "anya-e1009n6:66_0": "A-vivekījanantike.",
  "anya-e1009n6:67_0": "69.",
  "anya-e1009n6:68_0": " Yo ca uppatitaṁ atthaṁ,",
  "anya-e1009n6:69_0": "Na khippamanubujjhati;",
  "anya-e1009n6:70_0": "A-mittavasamanveti,",
  "anya-e1009n6:71_0": "Pacchā ca anutappati.",
  "anya-e1009n6:72_0": "70.",
  "anya-e1009n6:73_0": " Evaṁ mahiddhikā paññā,",
  "anya-e1009n6:74_0": "Nipuṇā sādhucintinī;",
  "anya-e1009n6:75_0": "Diṭṭhadhamma-hitatthāya,",
  "anya-e1009n6:76_0": "Samparāya-sukhāya vā.",
  "anya-e1009n6:77_0": "71.",
  "anya-e1009n6:78_0": " Taṁ balānaṁ balaṁ seṭṭha,",
  "anya-e1009n6:79_0": "Agga paññābalaṁ balaṁ;",
  "anya-e1009n6:80_0": "Paññābalenupatthaddho,",
  "anya-e1009n6:81_0": "Etthaṁ vindati paṇḍitto.",
  "anya-e1009n6:82_0": "72.",
  "anya-e1009n6:83_0": " Yena ñāṇena bujjhanti,",
  "anya-e1009n6:84_0": "Ariyā kata-kiccataṁ;",
  "anya-e1009n6:85_0": "Taṁ ñāṇa-ratanaṁ laddhaṁ,",
  "anya-e1009n6:86_0": "Vāyāmetha jinorasā.",
  "anya-e1009n6:87_0": "73.",
  "anya-e1009n6:88_0": " Paññāratanamālassa ,",
  "anya-e1009n6:89_0": "Na ciraṁ vattate bhavo;",
  "anya-e1009n6:90_0": "Khippaṁ dasseti amataṁ,",
  "anya-e1009n6:91_0": "Na ca so rocate bhave.",
  "anya-e1009n6:92_0": "74.",
  "anya-e1009n6:93_0": " Pamādamanuyuñjanti ,",
  "anya-e1009n6:94_0": "Bālā dummedhino janā;",
  "anya-e1009n6:95_0": "Appamādañca medhāvī,",
  "anya-e1009n6:96_0": "Dhanaṁ seṭṭhaṁva rakkhati.",
  "anya-e1009n6:97_0": "75.",
  "anya-e1009n6:98_0": " Dhana-puñña-dhī-lābhena ,",
  "anya-e1009n6:99_0": "Kālaṁ khiyyati paṇḍito;",
  "anya-e1009n6:100_0": "Kīḷanena ca dummedho,",
  "anya-e1009n6:101_0": "Niddāya kalahena vā.",
  "anya-e1009n6:102_0": "76.",
  "anya-e1009n6:103_0": " Pamādaṁ appamādena,",
  "anya-e1009n6:104_0": "Yadā nūdati paṇḍito;",
  "anya-e1009n6:105_0": "Paññāpāsāda-māruyha,",
  "anya-e1009n6:106_0": "A-soko sokiniṁ pajaṁ,",
  "anya-e1009n6:107_0": "Pabbataṭṭhova bhūmaṭṭhe,",
  "anya-e1009n6:108_0": "Dhīro bāle avekkhati.",
  "anya-e1009n6:109_0": "77.",
  "anya-e1009n6:110_0": " Natti attasamaṁ pemaṁ,",
  "anya-e1009n6:111_0": "Natthi dhaññasamaṁ dhanaṁ;",
  "anya-e1009n6:112_0": "Natthi paññāsamā ābhā,",
  "anya-e1009n6:113_0": "Vuṭṭhi ve paramā sarā.",
  "anya-e1009n6:114_0": "78.",
  "anya-e1009n6:115_0": " Diṭṭhe dhamme ca yo attho,",
  "anya-e1009n6:116_0": "Yo cattho samparāyiko;",
  "anya-e1009n6:117_0": "Atthābhisamayā dhīro,",
  "anya-e1009n6:118_0": "Paṇḍitoti pavuccati.",
  "anya-e1009n6:119_0": "79.",
  "anya-e1009n6:120_0": " Na tena paṇḍito hoti,",
  "anya-e1009n6:121_0": "Yāvatā bahu bhāsati;",
  "anya-e1009n6:122_0": "Khemī a-verī a-bhayo,",
  "anya-e1009n6:123_0": "Paṇḍitotti pavuccati.",
  "anya-e1009n6:124_0": "80.",
  "anya-e1009n6:125_0": " Yamhi saccañca dhammo ca,",
  "anya-e1009n6:126_0": "A-hiṁsā saṁyamo damo;",
  "anya-e1009n6:127_0": "Sa ve vantamalo dhīro,",
  "anya-e1009n6:128_0": "Thero iti pavuccatti.",
  "anya-e1009n6:129_0": "81.",
  "anya-e1009n6:130_0": " Saka-guṇaṁ saka-dosaṁ,",
  "anya-e1009n6:131_0": "Yo jānāti sapaṇḍito;",
  "anya-e1009n6:132_0": "Para-guṇaṁ para-dosaṁ,",
  "anya-e1009n6:133_0": "Yo jānāti sapaṇḍito.",
  "anya-e1009n6:134_0": "82.",
  "anya-e1009n6:135_0": " Sati-vīriya-paññāya ,",
  "anya-e1009n6:136_0": "Yo karoti iriyāpathe;",
  "anya-e1009n6:137_0": "So paṇḍito have bhave,",
  "anya-e1009n6:138_0": "Ubhayattha-pariggaho.",
  "anya-e1009n6:139_0": "83.",
  "anya-e1009n6:140_0": " Kataññū vijjā-sampanno,",
  "anya-e1009n6:141_0": "Jātimā dhanavā have;",
  "anya-e1009n6:142_0": "So vicāraṇa-sīlo ca,",
  "anya-e1009n6:143_0": "Niddukkho paṇḍito bhave.",
  "anya-e1009n6:144_0": "Sabbe kammassakā sattā,",
  "anya-e1009n6:145_0": "Kammaṁ satte vibhajjati.",
  "anya-e1009n6:146_0": "84.",
  "anya-e1009n6:147_0": " Yo passati paccakkhatthaṁ,",
  "anya-e1009n6:148_0": "Yo ca saṁsāratthaṁ tesu;",
  "anya-e1009n6:149_0": "Pacchimova pūjanīyo,",
  "anya-e1009n6:150_0": "Ubhayattha-sudiṭṭhattā.",
  "anya-e1009n6:151_0": "85.",
  "anya-e1009n6:152_0": " Appena anavajjena,",
  "anya-e1009n6:153_0": "Santuṭṭho sulabhena ca;",
  "anya-e1009n6:154_0": "Mattaññū subharo hutvā,",
  "anya-e1009n6:155_0": "Careyya paṇḍito naro.",
  "anya-e1009n6:156_0": "86.",
  "anya-e1009n6:157_0": " Attānameva pathamaṁ,",
  "anya-e1009n6:158_0": "Patirūpe nivesaye;",
  "anya-e1009n6:159_0": "Athaññamanusāseyya,",
  "anya-e1009n6:160_0": "Na kilisseyya paṇḍito.",
  "anya-e1009n6:161_0": "87.",
  "anya-e1009n6:162_0": " Uttama-parisāya ve,",
  "anya-e1009n6:163_0": "Utttamaṁ vācamuttamo;",
  "anya-e1009n6:164_0": "Bhaṇeyyākhepa-vitthāraṁ,",
  "anya-e1009n6:165_0": "Sā anagghyā lokattaye.",
  "anya-e1009n6:166_0": "88.",
  "anya-e1009n6:167_0": " Paṇḍitassa subhāsittaṁ,",
  "anya-e1009n6:168_0": "Paṇḍitova sujāniyā;",
  "anya-e1009n6:169_0": "Dummedho taṁ na jānāti,",
  "anya-e1009n6:170_0": "Dhīro dhīraṁ mamāyati.",
  "anya-e1009n6:171_0": "89.",
  "anya-e1009n6:172_0": " Yena kenaci vaṇṇena,",
  "anya-e1009n6:173_0": "Paro labhati rūppanaṁ;",
  "anya-e1009n6:174_0": "Attho vācāya ce hoti,",
  "anya-e1009n6:175_0": "Taṁ na bhāseyya paṇḍito.",
  "anya-e1009n6:176_0": "90.",
  "anya-e1009n6:177_0": " Bhuñjanatthaṁ kathanatthaṁ,",
  "anya-e1009n6:178_0": "Mukhaṁ hotītti no vade;",
  "anya-e1009n6:179_0": "Yaṁvā taṁvā mukhāruḷhaṁ,",
  "anya-e1009n6:180_0": "Vacanaṁ paṇḍito naro.",
  "anya-e1009n6:181_0": "91.",
  "anya-e1009n6:182_0": " Para-sattitto sa-sattiṁ,",
  "anya-e1009n6:183_0": "Dujjāno hi naro mite;",
  "anya-e1009n6:184_0": "Ce jāne saka-sattiṁca,",
  "anya-e1009n6:185_0": "Kā kathā para-sattiyā.",
  "anya-e1009n6:186_0": "92.",
  "anya-e1009n6:187_0": " Katta-guṇaṁ paresaṁ yo,",
  "anya-e1009n6:188_0": "Paṭikaroti paṇḍito;",
  "anya-e1009n6:189_0": "Jānāti so ācikkhati,",
  "anya-e1009n6:190_0": "Na bālo guṇa-māmako.",
  "anya-e1009n6:191_0": "93.",
  "anya-e1009n6:192_0": " Pabhūtaṁ neva kātabbaṁ,",
  "anya-e1009n6:193_0": "Bhavissaṁ neva cintaye;",
  "anya-e1009n6:194_0": "Vattamānena kālena,",
  "anya-e1009n6:195_0": "Vicaranti vicakkhaṇā.",
  "anya-e1009n6:196_0": "94.",
  "anya-e1009n6:197_0": " Dhammesu sati icchitā,",
  "anya-e1009n6:198_0": "Rasesu loṇamicchitaṁ;",
  "anya-e1009n6:199_0": "Rāja-kiccesu amaccaṁ,",
  "anya-e1009n6:200_0": "Sabba-ṭhānesu paṇḍitaṁ.",
  "anya-e1009n6:201_0": "95.",
  "anya-e1009n6:202_0": " Khattiyo seṭṭho jane tasmiṁ,",
  "anya-e1009n6:203_0": "Ye gottapaṭisārino;",
  "anya-e1009n6:204_0": "Vijjā-caraṇa-sampanno,",
  "anya-e1009n6:205_0": "So seṭṭho deva-mānuse.",
  "anya-e1009n6:206_0": "96.",
  "anya-e1009n6:207_0": " Sambuddho dvipadaṁ seṭṭho,",
  "anya-e1009n6:208_0": "Ājānīyo catuppadaṁ;",
  "anya-e1009n6:209_0": "Sussusā seṭṭhā bhariyānaṁ,",
  "anya-e1009n6:210_0": "Yo ca puttānamassavo.",
  "anya-e1009n6:211_0": "97.",
  "anya-e1009n6:212_0": " Sātthako ca a-sammoho,",
  "anya-e1009n6:213_0": "Sappāyo gocaro tathā;",
  "anya-e1009n6:214_0": "Cattārimāni sikkheyyuṁ,",
  "anya-e1009n6:215_0": "Sampajaññābhivaḍḍhakā.",
  "anya-e1009n6:216_0": "98.",
  "anya-e1009n6:217_0": " Paññañca kho a-sussusaṁ,",
  "anya-e1009n6:218_0": "Na koci adhigacchati;",
  "anya-e1009n6:219_0": "Bahussutaṁ anāgamma,",
  "anya-e1009n6:220_0": "Dhammaṭṭhaṁ a-vinibbhajaṁ.",
  "anya-e1009n6:221_0": "99.",
  "anya-e1009n6:222_0": " Adhippāyo sudubbodho,",
  "anya-e1009n6:223_0": "Yasmā vijjati pāḷiyaṁ;",
  "anya-e1009n6:224_0": "Tasmā upaṭṭhahaṁ gaṇhe,",
  "anya-e1009n6:225_0": "Garuṁ garumataṁ vidū."
}