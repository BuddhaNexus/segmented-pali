{
  "ud1.2:0.1_0": "Udāna 1.2",
  "ud1.2:0.2_0": "Dutiyabodhisutta",
  "ud1.2:1.1_0": "Evaṁ me sutaṁ—",
  "ud1.2:1.2_0": "ekaṁ samayaṁ bhagavā uruvelāyaṁ viharati najjā nerañjarāya tīre bodhirukkhamūle paṭhamābhisambuddho.",
  "ud1.2:1.3_0": "Tena kho pana samayena bhagavā sattāhaṁ ekapallaṅkena nisinno hoti vimuttisukhapaṭisaṁvedī.",
  "ud1.2:1.4_0": "Atha kho bhagavā tassa sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā rattiyā majjhimaṁ yāmaṁ paṭiccasamuppādaṁ paṭilomaṁ sādhukaṁ manasākāsi:",
  "ud1.2:2.1_0": "“Iti imasmiṁ asati idaṁ na hoti,",
  "ud1.2:2.2_0": "imassa nirodhā idaṁ nirujjhati, yadidaṁ—",
  "ud1.2:2.3_0": "avijjānirodhā saṅkhāranirodho,",
  "ud1.2:2.4_0": "saṅkhāranirodhā viññāṇanirodho,",
  "ud1.2:2.5_0": "viññāṇanirodhā nāmarūpanirodho,",
  "ud1.2:2.6_0": "nāmarūpanirodhā saḷāyatananirodho,",
  "ud1.2:2.7_0": "saḷāyatananirodhā phassanirodho,",
  "ud1.2:2.8_0": "phassanirodhā vedanānirodho,",
  "ud1.2:2.9_0": "vedanānirodhā taṇhānirodho,",
  "ud1.2:2.10_0": "taṇhānirodhā upādānanirodho,",
  "ud1.2:2.11_0": "upādānanirodhā bhavanirodho,",
  "ud1.2:2.12_0": "bhavanirodhā jātinirodho,",
  "ud1.2:2.13_0": "jātinirodhā jarāmaraṇaṁ sokaparidevadukkhadomanassupāyāsā nirujjhanti.",
  "ud1.2:2.14_0": "Evametassa kevalassa dukkhakkhandhassa nirodho hotī”ti.",
  "ud1.2:3.1_0": "Atha kho bhagavā etamatthaṁ viditvā tāyaṁ velāyaṁ imaṁ udānaṁ udānesi:",
  "ud1.2:4.1_0": "“Yadā have pātubhavanti dhammā,",
  "ud1.2:4.2_0": "Ātāpino jhāyato brāhmaṇassa;",
  "ud1.2:4.3_0": "Athassa kaṅkhā vapayanti sabbā,",
  "ud1.2:4.4_0": "Yato khayaṁ paccayānaṁ avedī”ti.",
  "ud1.2:4.5_0": "Dutiyaṁ."
}