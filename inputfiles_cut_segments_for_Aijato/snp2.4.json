{
  "snp2.4:0.1_0": "Sutta Nipāta 2.4",
  "snp2.4:0.2_0": "Maṅgalasutta",
  "snp2.4:1.1_0": "Evaṁ me sutaṁ—",
  "snp2.4:1.2_0": "ekaṁ samayaṁ bhagavā sāvatthiyaṁ viharati jetavane anāthapiṇḍikassa ārāme.",
  "snp2.4:1.3_0": "Atha kho aññatarā devatā abhikkantāya rattiyā abhikkantavaṇṇā kevalakappaṁ jetavanaṁ obhāsetvā yena bhagavā tenupasaṅkami;",
  "snp2.4:1.3_1": "upasaṅkamitvā bhagavantaṁ abhivādetvā ekamantaṁ aṭṭhāsi.",
  "snp2.4:1.4_0": "Ekamantaṁ ṭhitā kho sā devatā bhagavantaṁ gāthāya ajjhabhāsi:",
  "snp2.4:2.1_0": "“Bahū devā manussā ca,",
  "snp2.4:2.2_0": "maṅgalāni acintayuṁ;",
  "snp2.4:2.3_0": "Ākaṅkhamānā sotthānaṁ,",
  "snp2.4:2.4_0": "brūhi maṅgalamuttamaṁ”.",
  "snp2.4:3.1_0": "“Asevanā ca bālānaṁ,",
  "snp2.4:3.2_0": "paṇḍitānañca sevanā;",
  "snp2.4:3.3_0": "Pūjā ca pūjaneyyānaṁ,",
  "snp2.4:3.4_0": "etaṁ maṅgalamuttamaṁ.",
  "snp2.4:4.1_0": "Patirūpadesavāso ca,",
  "snp2.4:4.2_0": "pubbe ca katapuññatā;",
  "snp2.4:4.3_0": "Attasammāpaṇidhi ca,",
  "snp2.4:4.4_0": "etaṁ maṅgalamuttamaṁ.",
  "snp2.4:5.1_0": "Bāhusaccañca sippañca,",
  "snp2.4:5.2_0": "vinayo ca susikkhito;",
  "snp2.4:5.3_0": "Subhāsitā ca yā vācā,",
  "snp2.4:5.4_0": "etaṁ maṅgalamuttamaṁ.",
  "snp2.4:6.1_0": "Mātāpitu upaṭṭhānaṁ,",
  "snp2.4:6.2_0": "puttadārassa saṅgaho;",
  "snp2.4:6.3_0": "Anākulā ca kammantā,",
  "snp2.4:6.4_0": "etaṁ maṅgalamuttamaṁ.",
  "snp2.4:7.1_0": "Dānañca dhammacariyā ca,",
  "snp2.4:7.2_0": "ñātakānañca saṅgaho;",
  "snp2.4:7.3_0": "Anavajjāni kammāni,",
  "snp2.4:7.4_0": "etaṁ maṅgalamuttamaṁ.",
  "snp2.4:8.1_0": "Āratī viratī pāpā,",
  "snp2.4:8.2_0": "majjapānā ca saṁyamo;",
  "snp2.4:8.3_0": "Appamādo ca dhammesu,",
  "snp2.4:8.4_0": "etaṁ maṅgalamuttamaṁ.",
  "snp2.4:9.1_0": "Gāravo ca nivāto ca,",
  "snp2.4:9.2_0": "santuṭṭhi ca kataññutā;",
  "snp2.4:9.3_0": "Kālena dhammassavanaṁ,",
  "snp2.4:9.4_0": "etaṁ maṅgalamuttamaṁ.",
  "snp2.4:10.1_0": "Khantī ca sovacassatā,",
  "snp2.4:10.2_0": "samaṇānañca dassanaṁ;",
  "snp2.4:10.3_0": "Kālena dhammasākacchā,",
  "snp2.4:10.4_0": "etaṁ maṅgalamuttamaṁ.",
  "snp2.4:11.1_0": "Tapo ca brahmacariyañca,",
  "snp2.4:11.2_0": "Ariyasaccāna dassanaṁ;",
  "snp2.4:11.3_0": "Nibbānasacchikiriyā ca,",
  "snp2.4:11.4_0": "Etaṁ maṅgalamuttamaṁ.",
  "snp2.4:12.1_0": "Phuṭṭhassa lokadhammehi,",
  "snp2.4:12.2_0": "Cittaṁ yassa na kampati;",
  "snp2.4:12.3_0": "Asokaṁ virajaṁ khemaṁ,",
  "snp2.4:12.4_0": "Etaṁ maṅgalamuttamaṁ.",
  "snp2.4:13.1_0": "Etādisāni katvāna,",
  "snp2.4:13.2_0": "Sabbattha maparājitā;",
  "snp2.4:13.3_0": "Sabbattha sotthiṁ gacchanti,",
  "snp2.4:13.4_0": "Taṁ tesaṁ maṅgalamuttaman”ti.",
  "snp2.4:13.5_0": "Maṅgalasuttaṁ catutthaṁ."
}