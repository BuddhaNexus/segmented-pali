{
  "thag8.2:0.1_0": "Theragāthā",
  "thag8.2:0.2_0": "Aṭṭhakanipāta",
  "thag8.2:0.3_0": "Paṭhamavagga",
  "thag8.2:0.4_0": "8.2. Sirimittattheragāthā",
  "thag8.2:1.1_0": "“Akkodhanonupanāhī,",
  "thag8.2:1.2_0": "amāyo rittapesuṇo;",
  "thag8.2:1.3_0": "Sa ve tādisako bhikkhu,",
  "thag8.2:1.4_0": "evaṁ pecca na socati.",
  "thag8.2:2.1_0": "Akkodhanonupanāhī,",
  "thag8.2:2.2_0": "amāyo rittapesuṇo;",
  "thag8.2:2.3_0": "Guttadvāro sadā bhikkhu,",
  "thag8.2:2.4_0": "evaṁ pecca na socati.",
  "thag8.2:3.1_0": "Akkodhanonupanāhī,",
  "thag8.2:3.2_0": "amāyo rittapesuṇo;",
  "thag8.2:3.3_0": "Kalyāṇasīlo so bhikkhu,",
  "thag8.2:3.4_0": "evaṁ pecca na socati.",
  "thag8.2:4.1_0": "Akkodhanonupanāhī,",
  "thag8.2:4.2_0": "amāyo rittapesuṇo;",
  "thag8.2:4.3_0": "Kalyāṇamitto so bhikkhu,",
  "thag8.2:4.4_0": "evaṁ pecca na socati.",
  "thag8.2:5.1_0": "Akkodhanonupanāhī,",
  "thag8.2:5.2_0": "amāyo rittapesuṇo;",
  "thag8.2:5.3_0": "Kalyāṇapañño so bhikkhu,",
  "thag8.2:5.4_0": "evaṁ pecca na socati.",
  "thag8.2:6.1_0": "Yassa saddhā tathāgate,",
  "thag8.2:6.2_0": "acalā suppatiṭṭhitā;",
  "thag8.2:6.3_0": "Sīlañca yassa kalyāṇaṁ,",
  "thag8.2:6.4_0": "ariyakantaṁ pasaṁsitaṁ.",
  "thag8.2:7.1_0": "Saṅghe pasādo yassatthi,",
  "thag8.2:7.2_0": "ujubhūtañca dassanaṁ;",
  "thag8.2:7.3_0": "‘Adaliddo’ti taṁ āhu,",
  "thag8.2:7.4_0": "amoghaṁ tassa jīvitaṁ.",
  "thag8.2:8.1_0": "Tasmā saddhañca sīlañca,",
  "thag8.2:8.2_0": "pasādaṁ dhammadassanaṁ;",
  "thag8.2:8.3_0": "Anuyuñjetha medhāvī,",
  "thag8.2:8.4_0": "saraṁ buddhāna sāsanan”ti.",
  "thag8.2:8.5_0": "… Sirimitto thero …."
}