{
  "tha-ap154:0.1_0": "Therāpadāna",
  "tha-ap154:0.2_0": "Bandhujīvakavagga",
  "tha-ap154:0.3_0": "2. Tambapupphiyattheraapadāna",
  "tha-ap154:1.1_0": "“Parakammāyane yutto,",
  "tha-ap154:1.2_0": "aparādhaṁ akāsahaṁ;",
  "tha-ap154:1.3_0": "Vanantaṁ abhidhāvissaṁ,",
  "tha-ap154:1.4_0": "bhayaverasamappito.",
  "tha-ap154:2.1_0": "Pupphitaṁ pādapaṁ disvā,",
  "tha-ap154:2.2_0": "piṇḍibandhaṁ sunimmitaṁ;",
  "tha-ap154:2.3_0": "Tambapupphaṁ gahetvāna,",
  "tha-ap154:2.4_0": "bodhiyaṁ okiriṁ ahaṁ.",
  "tha-ap154:3.1_0": "Sammajjitvāna taṁ bodhiṁ,",
  "tha-ap154:3.2_0": "pāṭaliṁ pādaputtamaṁ;",
  "tha-ap154:3.3_0": "Pallaṅkaṁ ābhujitvāna,",
  "tha-ap154:3.4_0": "bodhimūle upāvisiṁ.",
  "tha-ap154:4.1_0": "Gatamaggaṁ gavesantā,",
  "tha-ap154:4.2_0": "āgacchuṁ mama santikaṁ;",
  "tha-ap154:4.3_0": "Te ca disvānahaṁ tattha,",
  "tha-ap154:4.4_0": "āvajjiṁ bodhimuttamaṁ.",
  "tha-ap154:5.1_0": "Vanditvāna ahaṁ bodhiṁ,",
  "tha-ap154:5.2_0": "vippasannena cetasā;",
  "tha-ap154:5.3_0": "Anekatāle papatiṁ,",
  "tha-ap154:5.4_0": "giridugge bhayānake.",
  "tha-ap154:6.1_0": "Ekanavutito kappe,",
  "tha-ap154:6.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap154:6.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap154:6.4_0": "bodhipūjāyidaṁ phalaṁ.",
  "tha-ap154:7.1_0": "Ito ca tatiye kappe,",
  "tha-ap154:7.2_0": "rājā susaññato ahaṁ;",
  "tha-ap154:7.3_0": "Sattaratanasampanno,",
  "tha-ap154:7.4_0": "cakkavattī mahabbalo.",
  "tha-ap154:8.1_0": "Paṭisambhidā catasso,",
  "tha-ap154:8.2_0": "…pe…",
  "tha-ap154:8.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap154:9.1_0": "Itthaṁ sudaṁ āyasmā tambapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap154:10.1_0": "Tambapupphiyattherassāpadānaṁ dutiyaṁ."
}