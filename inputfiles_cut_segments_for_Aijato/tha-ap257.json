{
  "tha-ap257:0.1_0": "Therāpadāna",
  "tha-ap257:0.2_0": "Thomakavagga",
  "tha-ap257:0.3_0": "5. Sattapāṭaliyattheraapadāna",
  "tha-ap257:1.1_0": "“Kaṇikāraṁva jotantaṁ,",
  "tha-ap257:1.2_0": "nisinnaṁ pabbatantare;",
  "tha-ap257:1.3_0": "Satta pāṭalipupphāni,",
  "tha-ap257:1.4_0": "buddhassa abhiropayiṁ.",
  "tha-ap257:2.1_0": "Catunnavutito kappe,",
  "tha-ap257:2.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap257:2.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap257:2.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap257:3.1_0": "Paṭisambhidā catasso,",
  "tha-ap257:3.2_0": "…pe…",
  "tha-ap257:3.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap257:4.1_0": "Itthaṁ sudaṁ āyasmā sattapāṭaliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap257:5.1_0": "Sattapāṭaliyattherassāpadānaṁ pañcamaṁ."
}