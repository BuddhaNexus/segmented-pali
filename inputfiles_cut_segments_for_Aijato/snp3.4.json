{
  "snp3.4:0.1_0": "Sutta Nipāta 3.4",
  "snp3.4:0.2_0": "Pūraḷāsa (sundarikabhāradvāja) sutta",
  "snp3.4:1.1_0": "Evaṁ me sutaṁ—",
  "snp3.4:1.2_0": " ekaṁ samayaṁ bhagavā kosalesu viharati sundarikāya nadiyā tīre.",
  "snp3.4:1.3_0": "Tena kho pana samayena sundarikabhāradvājo brāhmaṇo sundarikāya nadiyā tīre aggiṁ juhati, aggihuttaṁ paricarati.",
  "snp3.4:1.4_0": "Atha kho sundarikabhāradvājo brāhmaṇo aggiṁ juhitvā aggihuttaṁ paricaritvā uṭṭhāyāsanā samantā catuddisā anuvilokesi:",
  "snp3.4:1.5_0": "“ko nu kho imaṁ habyasesaṁ bhuñjeyyā”ti?",
  "snp3.4:1.6_0": "Addasā kho sundarikabhāradvājo brāhmaṇo bhagavantaṁ avidūre aññatarasmiṁ rukkhamūle sasīsaṁ pārutaṁ nisinnaṁ;",
  "snp3.4:1.7_0": "disvāna vāmena hatthena habyasesaṁ gahetvā dakkhiṇena hatthena kamaṇḍaluṁ gahetvā yena bhagavā tenupasaṅkami.",
  "snp3.4:2.1_0": "Atha kho bhagavā sundarikabhāradvājassa brāhmaṇassa padasaddena sīsaṁ vivari.",
  "snp3.4:2.2_0": "Atha kho sundarikabhāradvājo brāhmaṇo:",
  "snp3.4:2.3_0": "“muṇḍo ayaṁ bhavaṁ, muṇḍako ayaṁ bhavan”ti tatova puna nivattitukāmo ahosi.",
  "snp3.4:2.4_0": "Atha kho sundarikabhāradvājassa brāhmaṇassa etadahosi:",
  "snp3.4:2.5_0": "“muṇḍāpi hi idhekacce brāhmaṇā bhavanti, yannūnāhaṁ upasaṅkamitvā jātiṁ puccheyyan”ti.",
  "snp3.4:2.6_0": "Atha kho sundarikabhāradvājo brāhmaṇo yena bhagavā tenupasaṅkami;",
  "snp3.4:2.6_1": "upasaṅkamitvā bhagavantaṁ etadavoca:",
  "snp3.4:2.7_0": "“kiṁjacco bhavan”ti?",
  "snp3.4:3.1_0": "Atha kho bhagavā sundarikabhāradvājaṁ brāhmaṇaṁ gāthāhi ajjhabhāsi:",
  "snp3.4:4.1_0": "“Na brāhmaṇo nomhi na rājaputto,",
  "snp3.4:4.2_0": "Na vessāyano uda koci nomhi;",
  "snp3.4:4.3_0": "Gottaṁ pariññāya puthujjanānaṁ,",
  "snp3.4:4.4_0": "Akiñcano manta carāmi loke.",
  "snp3.4:5.1_0": "Saṅghāṭivāsī agaho carāmi,",
  "snp3.4:5.2_0": "Nivuttakeso abhinibbutatto;",
  "snp3.4:5.3_0": "Alippamāno idha māṇavehi,",
  "snp3.4:5.4_0": "Akallaṁ maṁ brāhmaṇa pucchasi gottapañhaṁ”.",
  "snp3.4:6.1_0": "“Pucchanti ve bho brāhmaṇā brāhmaṇebhi,",
  "snp3.4:6.2_0": "Saha brāhmaṇo no bhavan”ti.",
  "snp3.4:7.1_0": "“Brāhmaṇo hi ce tvaṁ brūsi,",
  "snp3.4:7.2_0": "Mañca brūsi abrāhmaṇaṁ;",
  "snp3.4:7.3_0": "Taṁ taṁ sāvittiṁ pucchāmi,",
  "snp3.4:7.4_0": "Tipadaṁ catuvīsatakkharaṁ”.",
  "snp3.4:8.1_0": "“Kiṁ nissitā isayo manujā,",
  "snp3.4:8.2_0": "Khattiyā brāhmaṇā devatānaṁ;",
  "snp3.4:8.3_0": "Yaññamakappayiṁsu puthū idha loke”.",
  "snp3.4:9.1_0": "“Yadantagū vedagū yaññakāle,",
  "snp3.4:9.2_0": "Yassāhutiṁ labhe tassijjheti brūmi”.",
  "snp3.4:10.1_0": "“Addhā hi tassa hutamijjhe,",
  "snp3.4:10.2_0": "(iti brāhmaṇo)",
  "snp3.4:10.3_0": "Yaṁ tādisaṁ vedagumaddasāma;",
  "snp3.4:10.4_0": "Tumhādisānañhi adassanena,",
  "snp3.4:10.5_0": "Añño jano bhuñjati pūraḷāsaṁ”.",
  "snp3.4:11.1_0": "“Tasmātiha tvaṁ brāhmaṇa atthena,",
  "snp3.4:11.2_0": "Atthiko upasaṅkamma puccha;",
  "snp3.4:11.3_0": "Santaṁ vidhūmaṁ anīghaṁ nirāsaṁ,",
  "snp3.4:11.4_0": "Appevidha abhivinde sumedhaṁ”.",
  "snp3.4:12.1_0": "“Yaññe ratohaṁ bho gotama,",
  "snp3.4:12.2_0": "Yaññaṁ yiṭṭhukāmo nāhaṁ pajānāmi;",
  "snp3.4:12.3_0": "Anusāsatu maṁ bhavaṁ,",
  "snp3.4:12.4_0": "Yattha hutaṁ ijjhate brūhi me taṁ”.",
  "snp3.4:13.1_0": "“Tena hi tvaṁ, brāhmaṇa, odahassu sotaṁ; dhammaṁ te desessāmi—",
  "snp3.4:14.1_0": "Mā jātiṁ pucchī caraṇañca puccha,",
  "snp3.4:14.2_0": "Kaṭṭhā have jāyati jātavedo;",
  "snp3.4:14.3_0": "Nīcākulīnopi munī dhitīmā,",
  "snp3.4:14.4_0": "Ājāniyo hoti hirīnisedho.",
  "snp3.4:15.1_0": "Saccena danto damasā upeto,",
  "snp3.4:15.2_0": "Vedantagū vūsitabrahmacariyo;",
  "snp3.4:15.3_0": "Kālena tamhi habyaṁ pavecche,",
  "snp3.4:15.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.4:16.1_0": "Ye kāme hitvā agahā caranti,",
  "snp3.4:16.2_0": "Susaññatattā tasaraṁva ujjuṁ;",
  "snp3.4:16.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.4:16.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.4:17.1_0": "Ye vītarāgā susamāhitindriyā,",
  "snp3.4:17.2_0": "Candova rāhuggahaṇā pamuttā;",
  "snp3.4:17.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.4:17.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.4:18.1_0": "Asajjamānā vicaranti loke,",
  "snp3.4:18.2_0": "Sadā satā hitvā mamāyitāni;",
  "snp3.4:18.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.4:18.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.4:19.1_0": "Yo kāme hitvā abhibhuyyacārī,",
  "snp3.4:19.2_0": "Yo vedi jātīmaraṇassa antaṁ;",
  "snp3.4:19.3_0": "Parinibbuto udakarahadova sīto,",
  "snp3.4:19.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:20.1_0": "Samo samehi visamehi dūre,",
  "snp3.4:20.2_0": "Tathāgato hoti anantapañño;",
  "snp3.4:20.3_0": "Anūpalitto idha vā huraṁ vā,",
  "snp3.4:20.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:21.1_0": "Yamhi na māyā vasati na māno,",
  "snp3.4:21.2_0": "Yo vītalobho amamo nirāso;",
  "snp3.4:21.3_0": "Paṇunnakodho abhinibbutatto,",
  "snp3.4:21.4_0": "Yo brāhmaṇo sokamalaṁ ahāsi;",
  "snp3.4:21.5_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:22.1_0": "Nivesanaṁ yo manaso ahāsi,",
  "snp3.4:22.2_0": "Pariggahā yassa na santi keci;",
  "snp3.4:22.3_0": "Anupādiyāno idha vā huraṁ vā,",
  "snp3.4:22.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:23.1_0": "Samāhito yo udatāri oghaṁ,",
  "snp3.4:23.2_0": "Dhammaṁ caññāsi paramāya diṭṭhiyā;",
  "snp3.4:23.3_0": "Khīṇāsavo antimadehadhārī,",
  "snp3.4:23.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:24.1_0": "Bhavāsavā yassa vacī kharā ca,",
  "snp3.4:24.2_0": "Vidhūpitā atthagatā na santi;",
  "snp3.4:24.3_0": "Sa vedagū sabbadhi vippamutto,",
  "snp3.4:24.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:25.1_0": "Saṅgātigo yassa na santi saṅgā,",
  "snp3.4:25.2_0": "Yo mānasattesu amānasatto;",
  "snp3.4:25.3_0": "Dukkhaṁ pariññāya sakhettavatthuṁ,",
  "snp3.4:25.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:26.1_0": "Āsaṁ anissāya vivekadassī,",
  "snp3.4:26.2_0": "Paravediyaṁ diṭṭhimupātivatto;",
  "snp3.4:26.3_0": "Ārammaṇā yassa na santi keci,",
  "snp3.4:26.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:27.1_0": "Paroparā yassa samecca dhammā,",
  "snp3.4:27.2_0": "Vidhūpitā atthagatā na santi;",
  "snp3.4:27.3_0": "Santo upādānakhaye vimutto,",
  "snp3.4:27.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:28.1_0": "Saṁyojanaṁ jātikhayantadassī,",
  "snp3.4:28.2_0": "Yopānudi rāgapathaṁ asesaṁ;",
  "snp3.4:28.3_0": "Suddho nidoso vimalo akāco,",
  "snp3.4:28.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:29.1_0": "Yo attano attānaṁ nānupassati,",
  "snp3.4:29.2_0": "Samāhito ujjugato ṭhitatto;",
  "snp3.4:29.3_0": "Sa ve anejo akhilo akaṅkho,",
  "snp3.4:29.4_0": "Tathāgato arahati pūraḷāsaṁ.",
  "snp3.4:30.1_0": "Mohantarā yassa na santi keci,",
  "snp3.4:30.2_0": "Sabbesu dhammesu ca ñāṇadassī;",
  "snp3.4:30.3_0": "Sarīrañca antimaṁ dhāreti,",
  "snp3.4:30.4_0": "Patto ca sambodhimanuttaraṁ sivaṁ;",
  "snp3.4:30.5_0": "Ettāvatā yakkhassa suddhi,",
  "snp3.4:30.6_0": "Tathāgato arahati pūraḷāsaṁ”.",
  "snp3.4:31.1_0": "“Hutañca mayhaṁ hutamatthu saccaṁ,",
  "snp3.4:31.2_0": "Yaṁ tādisaṁ vedagunaṁ alatthaṁ;",
  "snp3.4:31.3_0": "Brahmā hi sakkhi paṭigaṇhātu me bhagavā,",
  "snp3.4:31.4_0": "Bhuñjatu me bhagavā pūraḷāsaṁ”.",
  "snp3.4:32.1_0": "“Gāthābhigītaṁ me abhojaneyyaṁ,",
  "snp3.4:32.2_0": "Sampassataṁ brāhmaṇa nesa dhammo;",
  "snp3.4:32.3_0": "Gāthābhigītaṁ panudanti buddhā,",
  "snp3.4:32.4_0": "Dhamme satī brāhmaṇa vuttiresā.",
  "snp3.4:33.1_0": "Aññena ca kevalinaṁ mahesiṁ,",
  "snp3.4:33.2_0": "Khīṇāsavaṁ kukkuccavūpasantaṁ;",
  "snp3.4:33.3_0": "Annena pānena upaṭṭhahassu,",
  "snp3.4:33.4_0": "Khettañhi taṁ puññapekkhassa hoti”.",
  "snp3.4:34.1_0": "“Sādhāhaṁ bhagavā tathā vijaññaṁ,",
  "snp3.4:34.2_0": "Yo dakkhiṇaṁ bhuñjeyya mādisassa;",
  "snp3.4:34.3_0": "Yaṁ yaññakāle pariyesamāno,",
  "snp3.4:34.4_0": "Pappuyya tava sāsanaṁ”.",
  "snp3.4:35.1_0": "“Sārambhā yassa vigatā,",
  "snp3.4:35.2_0": "Cittaṁ yassa anāvilaṁ;",
  "snp3.4:35.3_0": "Vippamutto ca kāmehi,",
  "snp3.4:35.4_0": "Thinaṁ yassa panūditaṁ.",
  "snp3.4:36.1_0": "Sīmantānaṁ vinetāraṁ,",
  "snp3.4:36.2_0": "Jātimaraṇakovidaṁ;",
  "snp3.4:36.3_0": "Muniṁ moneyyasampannaṁ,",
  "snp3.4:36.4_0": "Tādisaṁ yaññamāgataṁ.",
  "snp3.4:37.1_0": "Bhakuṭiṁ vinayitvāna,",
  "snp3.4:37.2_0": "Pañjalikā namassatha;",
  "snp3.4:37.3_0": "Pūjetha annapānena,",
  "snp3.4:37.4_0": "Evaṁ ijjhanti dakkhiṇā”.",
  "snp3.4:38.1_0": "“Buddho bhavaṁ arahati pūraḷāsaṁ,",
  "snp3.4:38.2_0": "Puññakhettamanuttaraṁ;",
  "snp3.4:38.3_0": "Āyāgo sabbalokassa,",
  "snp3.4:38.4_0": "Bhoto dinnaṁ mahapphalan”ti.",
  "snp3.4:39.1_0": "Atha kho sundarikabhāradvājo brāhmaṇo bhagavantaṁ etadavoca:",
  "snp3.4:39.2_0": "“abhikkantaṁ, bho gotama, abhikkantaṁ, bho gotama.",
  "snp3.4:39.3_0": "Seyyathāpi, bho gotama, nikkujjitaṁ vā ukkujjeyya, paṭicchannaṁ vā vivareyya, mūḷhassa vā maggaṁ ācikkheyya, andhakāre vā telapajjotaṁ dhāreyya:",
  "snp3.4:39.3_1": "‘cakkhumanto rūpāni dakkhantī’ti;",
  "snp3.4:39.3_2": "evamevaṁ bhotā gotamena anekapariyāyena dhammo pakāsito.",
  "snp3.4:39.4_0": "Esāhaṁ bhavantaṁ gotamaṁ saraṇaṁ gacchāmi dhammañca bhikkhusaṅghañca.",
  "snp3.4:39.5_0": "Labheyyāhaṁ bhoto gotamassa santike pabbajjaṁ, labheyyaṁ upasampadan”ti.",
  "snp3.4:39.6_0": "Alattha kho sundarikabhāradvājo brāhmaṇo …pe…",
  "snp3.4:39.7_0": "arahataṁ ahosīti.",
  "snp3.4:39.8_0": "Sundarikabhāradvājasuttaṁ catutthaṁ."
}