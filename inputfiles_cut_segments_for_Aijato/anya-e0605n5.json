{
  "anya-e0605n5:0_0": "Bodhisambhāradīpanīgāthā",
  "anya-e0605n5:1_0": "23.",
  "anya-e0605n5:2_0": "So dukkhakhinnajanadassanadukkhakhinno,",
  "anya-e0605n5:3_0": "Kāruññameva janatāya akāsi niccaṁ;",
  "anya-e0605n5:4_0": "Tesaṁ hi mocanamupāyamidanti ñatvā,",
  "anya-e0605n5:5_0": "Tādīparādhamapi attani ropayī so.",
  "anya-e0605n5:6_0": "24.",
  "anya-e0605n5:7_0": "Dānādinekavarapāramisāgaresu,",
  "anya-e0605n5:8_0": "Ogāḷhatāyapi paduṭṭhajanena dinnaṁ;",
  "anya-e0605n5:9_0": "Dukkhaṁ tathā atimahantatarampi kiñci,",
  "anya-e0605n5:10_0": "Nāññāsi sattahitamevea gavesayanto.",
  "anya-e0605n5:11_0": "25.",
  "anya-e0605n5:12_0": "Chetvāna sīsaṁ hi sakaṁ dadanto,",
  "anya-e0605n5:13_0": "Maṁsaṁ pacitvāna sakaṁ dadanto;",
  "anya-e0605n5:14_0": "So cattagatto paṇidhānakāle,",
  "anya-e0605n5:15_0": "Duṭṭhassa kiṁ dussati chedanena.",
  "anya-e0605n5:16_0": "26.",
  "anya-e0605n5:17_0": "Evaṁ anantamapi jātisatesu dukkhaṁ,",
  "anya-e0605n5:18_0": "Patvāna sattahitameva gavesayanto;",
  "anya-e0605n5:19_0": "Dīpaṅkare gahitasīlasamādhipaññaṁ,",
  "anya-e0605n5:20_0": "Pālesi yāva sakabodhitale suniṭṭho.",
  "anya-e0605n5:21_0": "27.",
  "anya-e0605n5:22_0": "Yadābhinīhāramakā sumedho,",
  "anya-e0605n5:23_0": "Yadā ca maddiṁ adadā sivindo;",
  "anya-e0605n5:24_0": "Etthantare jātisu kiñcipekaṁ,",
  "anya-e0605n5:25_0": "Niratthakaṁ no agamāsi tassa.",
  "anya-e0605n5:26_0": "28.",
  "anya-e0605n5:27_0": "Mahāsamudde jalabindutopi,",
  "anya-e0605n5:28_0": "Tadantre jāti anappakā va;",
  "anya-e0605n5:29_0": "Nirantaraṁ pūritapāramīnaṁ,",
  "anya-e0605n5:30_0": "Kathaṁ pamāṇaṁ upamā kuhiṁ vā.",
  "anya-e0605n5:31_0": "29.",
  "anya-e0605n5:32_0": "Yo maggapasse madhurambabījaṁ,",
  "anya-e0605n5:33_0": "Chāyāphalatthāya mahājanānaṁ;",
  "anya-e0605n5:34_0": "Ropesi tasmiṁ hi khaṇeva tena,",
  "anya-e0605n5:35_0": "Chāyāphale puññamaladdhamuddhaṁ.",
  "anya-e0605n5:36_0": "30.",
  "anya-e0605n5:37_0": "Tatheva saṁsārapathe janānaṁ,",
  "anya-e0605n5:38_0": "Hitāya attanamabhiropitakkhaṇe;",
  "anya-e0605n5:39_0": "Siddhaṁ va puññūpari tassa tasmiṁ,",
  "anya-e0605n5:40_0": "Dhanaṅgajīvaṁ pi haranti ye ye.",
  "anya-e0605n5:41_0": "31.",
  "anya-e0605n5:42_0": "So sāgare jaladhikaṁ ruhiraṁ adāsi,",
  "anya-e0605n5:43_0": "Bhūmāparājiya samaṁsamadāsi dānaṁ;",
  "anya-e0605n5:44_0": "Meruppamāṇamadhikañca samoḷisīsaṁ,",
  "anya-e0605n5:45_0": "Khe tārakādhikataraṁ nayanaṁ adāsi."
}