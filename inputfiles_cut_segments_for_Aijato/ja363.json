{
  "ja363:0.1_0": "Jātaka",
  "ja363:0.2_0": "Pañcakanipāta",
  "ja363:0.3_0": "Vaṇṇārohavagga",
  "ja363:0.4_0": "3. Hirijātaka",
  "ja363:1.1_0": "“Hiriṁ tarantaṁ vijigucchamānaṁ,",
  "ja363:1.2_0": "Tavāhamasmī iti bhāsamānaṁ;",
  "ja363:1.3_0": "Seyyāni kammāni anādiyantaṁ,",
  "ja363:1.4_0": "Neso mamanti iti naṁ vijaññā.",
  "ja363:2.1_0": "Yañhi kayirā tañhi vade,",
  "ja363:2.2_0": "yaṁ na kayirā na taṁ vade;",
  "ja363:2.3_0": "Akarontaṁ bhāsamānaṁ,",
  "ja363:2.4_0": "parijānanti paṇḍitā.",
  "ja363:3.1_0": "Na so mitto yo sadā appamatto,",
  "ja363:3.2_0": "Bhedāsaṅkī randhamevānupassī;",
  "ja363:3.3_0": "Yasmiñca setī urasīva putto,",
  "ja363:3.4_0": "Sa ve mitto yo abhejjo parehi.",
  "ja363:4.1_0": "Pāmojjakaraṇaṁ ṭhānaṁ,",
  "ja363:4.2_0": "pasaṁsāvahanaṁ sukhaṁ;",
  "ja363:4.3_0": "Phalānisaṁso bhāveti,",
  "ja363:4.4_0": "vahanto porisaṁ dhuraṁ.",
  "ja363:5.1_0": "Pavivekarasaṁ pitvā,",
  "ja363:5.2_0": "rasaṁ upasamassa ca;",
  "ja363:5.3_0": "Niddaro hoti nippāpo,",
  "ja363:5.4_0": "dhammappītirasaṁ pivan”ti.",
  "ja363:6.1_0": "Hirijātakaṁ tatiyaṁ."
}