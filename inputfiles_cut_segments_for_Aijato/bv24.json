{
  "bv24:0.1_0": "Buddhavaṁsa",
  "bv24:0.2_0": "24. Kakusandhabuddhavaṁsa",
  "bv24:1.1_0": "“Vessabhussa aparena,",
  "bv24:1.2_0": "sambuddho dvipaduttamo;",
  "bv24:1.3_0": "Kakusandho nāma nāmena,",
  "bv24:1.4_0": "appameyyo durāsado.",
  "bv24:2.1_0": "Ugghāṭetvā sabbabhavaṁ,",
  "bv24:2.2_0": "cariyāya pāramiṁ gato;",
  "bv24:2.3_0": "Sīhova pañjaraṁ bhetvā,",
  "bv24:2.4_0": "patto sambodhimuttamaṁ.",
  "bv24:3.1_0": "Dhammacakkaṁ pavattente,",
  "bv24:3.2_0": "Kakusandhe lokanāyake;",
  "bv24:3.3_0": "Cattārīsakoṭisahassānaṁ,",
  "bv24:3.4_0": "Dhammābhisamayo ahu.",
  "bv24:4.1_0": "Antalikkhamhi ākāse,",
  "bv24:4.2_0": "yamakaṁ katvā vikubbanaṁ;",
  "bv24:4.3_0": "Tiṁsakoṭisahassānaṁ,",
  "bv24:4.4_0": "bodhesi devamānuse.",
  "bv24:5.1_0": "Naradevassa yakkhassa,",
  "bv24:5.2_0": "catusaccappakāsane;",
  "bv24:5.3_0": "Dhammābhisamayo tassa,",
  "bv24:5.4_0": "gaṇanāto asaṅkhiyo.",
  "bv24:6.1_0": "Kakusandhassa bhagavato,",
  "bv24:6.2_0": "eko āsi samāgamo;",
  "bv24:6.3_0": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv24:6.4_0": "santacittāna tādinaṁ.",
  "bv24:7.1_0": "Cattālīsasahassānaṁ,",
  "bv24:7.2_0": "tadā āsi samāgamo;",
  "bv24:7.3_0": "Dantabhūmimanuppattānaṁ,",
  "bv24:7.4_0": "āsavārigaṇakkhayā.",
  "bv24:8.1_0": "Ahaṁ tena samayena,",
  "bv24:8.2_0": "khemo nāmāsi khattiyo;",
  "bv24:8.3_0": "Tathāgate jinaputte,",
  "bv24:8.4_0": "dānaṁ datvā anappakaṁ.",
  "bv24:9.1_0": "Pattañca cīvaraṁ datvā,",
  "bv24:9.2_0": "añjanaṁ madhulaṭṭhikaṁ;",
  "bv24:9.3_0": "Imetaṁ patthitaṁ sabbaṁ,",
  "bv24:9.4_0": "paṭiyādemi varaṁ varaṁ.",
  "bv24:10.1_0": "Sopi maṁ buddho byākāsi,",
  "bv24:10.2_0": "kakusandho vināyako;",
  "bv24:10.3_0": "‘Imamhi bhaddake kappe,",
  "bv24:10.4_0": "ayaṁ buddho bhavissati.",
  "bv24:11.1_0": "Ahu kapilavhayā rammā,",
  "bv24:11.2_0": "…pe…",
  "bv24:11.3_0": "hessāma sammukhā imaṁ’.",
  "bv24:12.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv24:12.2_0": "bhiyyo cittaṁ pasādayiṁ;",
  "bv24:12.3_0": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv24:12.4_0": "dasapāramipūriyā.",
  "bv24:13.1_0": "Nagaraṁ khemāvatī nāma,",
  "bv24:13.2_0": "khemo nāmāsahaṁ tadā;",
  "bv24:13.3_0": "Sabbaññutaṁ gavesanto,",
  "bv24:13.4_0": "pabbajiṁ tassa santike.",
  "bv24:14.1_0": "Brāhmaṇo aggidatto ca,",
  "bv24:14.2_0": "āsi buddhassa so pitā;",
  "bv24:14.3_0": "Visākhā nāma janikā,",
  "bv24:14.4_0": "kakusandhassa satthuno.",
  "bv24:15.1_0": "Vasate tattha kheme pure,",
  "bv24:15.2_0": "sambuddhassa mahākulaṁ;",
  "bv24:15.3_0": "Narānaṁ pavaraṁ seṭṭhaṁ,",
  "bv24:15.4_0": "jātimantaṁ mahāyasaṁ.",
  "bv24:16.1_0": "Catuvassasahassāni,",
  "bv24:16.2_0": "Agāraṁ ajjha so vasi;",
  "bv24:16.3_0": "Kāmakāmavaṇṇakāmasuddhināmā,",
  "bv24:16.4_0": "Tayo pāsādamuttamā.",
  "bv24:17.1_0": "Samattiṁsasahassāni,",
  "bv24:17.2_0": "nāriyo samalaṅkatā;",
  "bv24:17.3_0": "Rocinī nāma sā nārī,",
  "bv24:17.4_0": "uttaro nāma atrajo.",
  "bv24:18.1_0": "Nimitte caturo disvā,",
  "bv24:18.2_0": "rathayānena nikkhami;",
  "bv24:18.3_0": "Anūnaaṭṭhamāsāni,",
  "bv24:18.4_0": "padhānaṁ padahī jino.",
  "bv24:19.1_0": "Brahmunā yācito santo,",
  "bv24:19.2_0": "kakusandho vināyako;",
  "bv24:19.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv24:19.4_0": "migadāye naruttamo.",
  "bv24:20.1_0": "Vidhuro ca sañjīvo ca,",
  "bv24:20.2_0": "ahesuṁ aggasāvakā;",
  "bv24:20.3_0": "Buddhijo nāmupaṭṭhāko,",
  "bv24:20.4_0": "kakusandhassa satthuno.",
  "bv24:21.1_0": "Sāmā ca campānāmā ca,",
  "bv24:21.2_0": "ahesuṁ aggasāvikā;",
  "bv24:21.3_0": "Bodhi tassa bhagavato,",
  "bv24:21.4_0": "sirīsoti pavuccati.",
  "bv24:22.1_0": "Accuto ca sumano ca,",
  "bv24:22.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv24:22.3_0": "Nandā ceva sunandā ca,",
  "bv24:22.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv24:23.1_0": "Cattālīsaratanāni,",
  "bv24:23.2_0": "accuggato mahāmuni;",
  "bv24:23.3_0": "Kanakappabhā niccharati,",
  "bv24:23.4_0": "samantā dasayojanaṁ.",
  "bv24:24.1_0": "Cattālīsavassasahassāni,",
  "bv24:24.2_0": "Āyu tassa mahesino;",
  "bv24:24.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv24:24.4_0": "Tāresi janataṁ bahuṁ.",
  "bv24:25.1_0": "Dhammāpaṇaṁ pasāretvā,",
  "bv24:25.2_0": "naranārīnaṁ sadevake;",
  "bv24:25.3_0": "Naditvā sīhanādaṁva,",
  "bv24:25.4_0": "nibbuto so sasāvako.",
  "bv24:26.1_0": "Aṭṭhaṅgavacanasampanno,",
  "bv24:26.2_0": "acchiddāni nirantaraṁ;",
  "bv24:26.3_0": "Sabbaṁ tamantarahitaṁ,",
  "bv24:26.4_0": "nanu rittā sabbasaṅkhārā.",
  "bv24:27.1_0": "Kakusandho jinavaro,",
  "bv24:27.2_0": "Khemārāmamhi nibbuto;",
  "bv24:27.3_0": "Tatthevassa thūpavaro,",
  "bv24:27.4_0": "Gāvutaṁ nabhamuggato”ti. ",
  "bv24:28.1_0": "Kakusandhassa bhagavato vaṁso dvāvīsatimo."
}