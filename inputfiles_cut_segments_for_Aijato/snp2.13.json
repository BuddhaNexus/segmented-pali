{
  "snp2.13:0.1_0": "Sutta Nipāta 2.13",
  "snp2.13:0.2_0": "Sammāparibbājanīyasutta",
  "snp2.13:1.1_0": "“Pucchāmi muniṁ pahūtapaññaṁ,",
  "snp2.13:1.2_0": "Tiṇṇaṁ pāraṅgataṁ parinibbutaṁ ṭhitattaṁ;",
  "snp2.13:1.3_0": "Nikkhamma gharā panujja kāme,",
  "snp2.13:1.4_0": "Kathaṁ bhikkhu sammā so loke paribbajeyya”.",
  "snp2.13:2.1_0": "“Yassa maṅgalā samūhatā,",
  "snp2.13:2.2_0": " (iti bhagavā)",
  "snp2.13:2.3_0": "Uppātā supinā ca lakkhaṇā ca;",
  "snp2.13:2.4_0": "So maṅgaladosavippahīno,",
  "snp2.13:2.5_0": "Sammā so loke paribbajeyya.",
  "snp2.13:3.1_0": "Rāgaṁ vinayetha mānusesu,",
  "snp2.13:3.2_0": "Dibbesu kāmesu cāpi bhikkhu;",
  "snp2.13:3.3_0": "Atikkamma bhavaṁ samecca dhammaṁ,",
  "snp2.13:3.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:4.1_0": "Vipiṭṭhikatvāna pesuṇāni,",
  "snp2.13:4.2_0": "Kodhaṁ kadarīyaṁ jaheyya bhikkhu;",
  "snp2.13:4.3_0": "Anurodhavirodhavippahīno,",
  "snp2.13:4.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:5.1_0": "Hitvāna piyañca appiyañca,",
  "snp2.13:5.2_0": "Anupādāya anissito kuhiñci;",
  "snp2.13:5.3_0": "Saṁyojaniyehi vippamutto,",
  "snp2.13:5.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:6.1_0": "Na so upadhīsu sārameti,",
  "snp2.13:6.2_0": "Ādānesu vineyya chandarāgaṁ;",
  "snp2.13:6.3_0": "So anissito anaññaneyyo,",
  "snp2.13:6.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:7.1_0": "Vacasā manasā ca kammunā ca,",
  "snp2.13:7.2_0": "Aviruddho sammā viditvā dhammaṁ;",
  "snp2.13:7.3_0": "Nibbānapadābhipatthayāno,",
  "snp2.13:7.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:8.1_0": "Yo vandati manti nunnameyya,",
  "snp2.13:8.2_0": "Akkuṭṭhopi na sandhiyetha bhikkhu;",
  "snp2.13:8.3_0": "Laddhā parabhojanaṁ na majje,",
  "snp2.13:8.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:9.1_0": "Lobhañca bhavañca vippahāya,",
  "snp2.13:9.2_0": "Virato chedanabandhanā ca bhikkhu;",
  "snp2.13:9.3_0": "So tiṇṇakathaṅkatho visallo,",
  "snp2.13:9.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:10.1_0": "Sāruppaṁ attano viditvā,",
  "snp2.13:10.2_0": "No ca bhikkhu hiṁseyya kañci loke;",
  "snp2.13:10.3_0": "Yathātathiyaṁ viditvā dhammaṁ,",
  "snp2.13:10.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:11.1_0": "Yassānusayā na santi keci,",
  "snp2.13:11.2_0": "Mūlā ca akusalā samūhatāse;",
  "snp2.13:11.3_0": "So nirāso anāsisāno,",
  "snp2.13:11.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:12.1_0": "Āsavakhīṇo pahīnamāno,",
  "snp2.13:12.2_0": "Sabbaṁ rāgapathaṁ upātivatto;",
  "snp2.13:12.3_0": "Danto parinibbuto ṭhitatto,",
  "snp2.13:12.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:13.1_0": "Saddho sutavā niyāmadassī,",
  "snp2.13:13.2_0": "Vaggagatesu na vaggasāri dhīro;",
  "snp2.13:13.3_0": "Lobhaṁ dosaṁ vineyya paṭighaṁ,",
  "snp2.13:13.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:14.1_0": "Saṁsuddhajino vivaṭṭacchado,",
  "snp2.13:14.2_0": "Dhammesu vasī pāragū anejo;",
  "snp2.13:14.3_0": "Saṅkhāranirodhañāṇakusalo,",
  "snp2.13:14.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:15.1_0": "Atītesu anāgatesu cāpi,",
  "snp2.13:15.2_0": "Kappātīto aticcasuddhipañño;",
  "snp2.13:15.3_0": "Sabbāyatanehi vippamutto,",
  "snp2.13:15.4_0": "Sammā so loke paribbajeyya.",
  "snp2.13:16.1_0": "Aññāya padaṁ samecca dhammaṁ,",
  "snp2.13:16.2_0": "Vivaṭaṁ disvāna pahānamāsavānaṁ;",
  "snp2.13:16.3_0": "Sabbupadhīnaṁ parikkhayāno,",
  "snp2.13:16.4_0": "Sammā so loke paribbajeyya”.",
  "snp2.13:17.1_0": "“Addhā hi bhagavā tatheva etaṁ,",
  "snp2.13:17.2_0": "Yo so evaṁvihārī danto bhikkhu;",
  "snp2.13:17.3_0": "Sabbasaṁyojanayogavītivatto,",
  "snp2.13:17.4_0": "Sammā so loke paribbajeyyā”ti.",
  "snp2.13:17.5_0": "Sammāparibbājanīyasuttaṁ terasamaṁ."
}