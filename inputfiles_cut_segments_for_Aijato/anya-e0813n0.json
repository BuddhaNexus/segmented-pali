{
  "anya-e0813n0:0_0": "Namo tassa bhagavato arahato sammāsambuddhassa.",
  "anya-e0813n0:1_0": "Bālāvatāra",
  "anya-e0813n0:2_0": "Paṇāma",
  "anya-e0813n0:3_0": "[Ka]",
  "anya-e0813n0:4_0": "Sabbaṁ niruttipathapāragataṁ sabuddhaṁ,",
  "anya-e0813n0:5_0": "Buddhaṁ tilokatilakaṁ hatapāpadhammaṁ;",
  "anya-e0813n0:6_0": "Dhammaṁ vimuttisukhadaṁ vihatāghasaṁghaṁ,",
  "anya-e0813n0:7_0": "Saṁghaṁ ca niccamabhivandiya dakkhiṇeyyaṁ.",
  "anya-e0813n0:8_0": "[Kha]",
  "anya-e0813n0:9_0": "Vuddhippattosmi muddho mama varagaravo sīlapaññādisobhe,",
  "anya-e0813n0:10_0": "Candādicceva suddhe varajinaṭhapite sāsanābbhe patīte;",
  "anya-e0813n0:11_0": "Nissāyevā tipemā paṇamiya sirasā niccamesaṁ saritvā,",
  "anya-e0813n0:12_0": "Pādambhoje guṇagge hataduritamalo ānubhāvena tassā.",
  "anya-e0813n0:13_0": "[Ga]",
  "anya-e0813n0:14_0": "Porāṇa sīhaḷa padattha vinicchayañca,",
  "anya-e0813n0:15_0": "Sabbampi māgadhaniruttinayaṁ pasatthaṁ;",
  "anya-e0813n0:16_0": "Aññañca nekavidha sakkata saddasatthaṁ,",
  "anya-e0813n0:17_0": "Pāramparābhata matañca nisamma sammā.",
  "anya-e0813n0:18_0": "[Gha]",
  "anya-e0813n0:19_0": "Bālāvatāra varamāgadha saddasatthe,",
  "anya-e0813n0:20_0": "Dubbodha nekapadaattha vinicchayena;",
  "anya-e0813n0:21_0": "Atthāya ādhunika bālaparamparāya,",
  "anya-e0813n0:22_0": "Bālāvatāra varagaṇṭhipadaṁ karissaṁ.",
  "anya-e0813n0:23_0": "[Ṅa]",
  "anya-e0813n0:24_0": "Niccaṁ ye mettha bālā varahadayayutā suṭṭhu nikkhittanettā,",
  "anya-e0813n0:25_0": "Puṇṇe nānānayānaṁ suratarusadise dhīrapāsaṁsiye ve;",
  "anya-e0813n0:26_0": "Gambhīraṁ duttaraṁ te jinavacanudadhiṁ tiṇṇathāmā bhaveyyuṁ,",
  "anya-e0813n0:27_0": "Laddhopāyā ca candaṁ taditarapacuraṁ sakkataṁ sotukāmā.",
  "anya-e0813n0:28_0": "[Ca]",
  "anya-e0813n0:29_0": "Ganthanipphattiyā sesa – dukkarattaṁ yathāvato;",
  "anya-e0813n0:30_0": "Jānanti kusalā dhīrā, nekasatthantarādisu;",
  "anya-e0813n0:31_0": "Ganthesu guṇadosampi, teyeva vidurā sadā.",
  "anya-e0813n0:32_0": "[Cha]",
  "anya-e0813n0:33_0": "Tasmā ettha pamādādi – dosaleso bhave yadi;",
  "anya-e0813n0:34_0": "Porāṇāceraladdhīhi, vilomaṁ vā bhaveyya ce.",
  "anya-e0813n0:35_0": "[Ja]",
  "anya-e0813n0:36_0": "Ganthantaraṁ vigāhetvā, vicāretvā punappunaṁ;",
  "anya-e0813n0:37_0": "Yuttimeva ca gaṇhantu, hutvā vīmaṁsabuddhikāti.",
  "anya-e0813n0:38_0": "Paṇāma",
  "anya-e0813n0:39_0": "1.",
  "anya-e0813n0:39_1": "Buddhaṁ tidhā bhivanditvā, buddhambuja vilocanaṁ.",
  "anya-e0813n0:40_0": "Bālāvatāraṁ bhāsissaṁ, bālānaṁ buddhivuddhiyā."
}