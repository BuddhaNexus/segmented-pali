{
  "tha-ap530:0.1_0": "Therāpadāna",
  "tha-ap530:0.2_0": "Tiṇadāyakavagga",
  "tha-ap530:0.3_0": "8. Bodhisammajjakattheraapadāna",
  "tha-ap530:1.1_0": "“Ahaṁ pure bodhipattaṁ,",
  "tha-ap530:1.2_0": "ujjhitaṁ cetiyaṅgaṇe;",
  "tha-ap530:1.3_0": "Taṁ gahetvāna chaḍḍesiṁ,",
  "tha-ap530:1.4_0": "alabhiṁ vīsatīguṇe.",
  "tha-ap530:2.1_0": "Tassa kammassa tejena,",
  "tha-ap530:2.2_0": "saṁsaranto bhavābhave;",
  "tha-ap530:2.3_0": "Duve bhave saṁsarāmi,",
  "tha-ap530:2.4_0": "devatte cāpi mānuse.",
  "tha-ap530:3.1_0": "Devalokā cavitvāna,",
  "tha-ap530:3.2_0": "āgantvā mānusaṁ bhavaṁ;",
  "tha-ap530:3.3_0": "Duve kule pajāyāmi,",
  "tha-ap530:3.4_0": "khattiye cāpi brāhmaṇe.",
  "tha-ap530:4.1_0": "Aṅgapaccaṅgasampanno,",
  "tha-ap530:4.2_0": "ārohapariṇāhavā;",
  "tha-ap530:4.3_0": "Abhirūpo suci homi,",
  "tha-ap530:4.4_0": "sampuṇṇaṅgo anūnako.",
  "tha-ap530:5.1_0": "Devaloke manusse vā,",
  "tha-ap530:5.2_0": "jāto vā yattha katthaci;",
  "tha-ap530:5.3_0": "Bhave suvaṇṇavaṇṇo ca,",
  "tha-ap530:5.4_0": "uttattakanakūpamo.",
  "tha-ap530:6.1_0": "Mudukā maddavā sniddhā,",
  "tha-ap530:6.2_0": "sukhumā sukumārikā;",
  "tha-ap530:6.3_0": "Chavi me sabbadā hoti,",
  "tha-ap530:6.4_0": "bodhipatte suchaḍḍite.",
  "tha-ap530:7.1_0": "Yato kutoci gatīsu,",
  "tha-ap530:7.2_0": "sarīre samudāgate;",
  "tha-ap530:7.3_0": "Na limpati rajojallaṁ,",
  "tha-ap530:7.4_0": "vipāko pattachaḍḍite.",
  "tha-ap530:8.1_0": "Uṇhe vātātape tassa,",
  "tha-ap530:8.2_0": "aggitāpena vā pana;",
  "tha-ap530:8.3_0": "Gatte sedā na muccanti,",
  "tha-ap530:8.4_0": "vipāko pattachaḍḍite.",
  "tha-ap530:9.1_0": "Kuṭṭhaṁ gaṇḍo kilāso ca,",
  "tha-ap530:9.2_0": "tilakā piḷakā tathā;",
  "tha-ap530:9.3_0": "Na honti kāye daddu ca,",
  "tha-ap530:9.4_0": "vipāko pattachaḍḍite.",
  "tha-ap530:10.1_0": "Aparampi guṇaṁ tassa,",
  "tha-ap530:10.2_0": "nibbattati bhavābhave;",
  "tha-ap530:10.3_0": "Rogā na honti kāyasmiṁ,",
  "tha-ap530:10.4_0": "vipāko pattachaḍḍite.",
  "tha-ap530:11.1_0": "Aparampi guṇaṁ tassa,",
  "tha-ap530:11.2_0": "nibbattati bhavābhave;",
  "tha-ap530:11.3_0": "Na hoti cittajā pīḷā,",
  "tha-ap530:11.4_0": "vipāko pattachaḍḍite.",
  "tha-ap530:12.1_0": "Aparampi guṇaṁ tassa,",
  "tha-ap530:12.2_0": "nibbattati bhavābhave;",
  "tha-ap530:12.3_0": "Amittā na bhavantassa,",
  "tha-ap530:12.4_0": "vipāko pattachaḍḍite.",
  "tha-ap530:13.1_0": "Aparampi guṇaṁ tassa,",
  "tha-ap530:13.2_0": "nibbattati bhavābhave;",
  "tha-ap530:13.3_0": "Anūnabhogo bhavati,",
  "tha-ap530:13.4_0": "vipāko pattachaḍḍite.",
  "tha-ap530:14.1_0": "Aparampi guṇaṁ tassa,",
  "tha-ap530:14.2_0": "nibbattati bhavābhave;",
  "tha-ap530:14.3_0": "Aggirājūhi corehi,",
  "tha-ap530:14.4_0": "na hoti udake bhayaṁ.",
  "tha-ap530:15.1_0": "Aparampi guṇaṁ tassa,",
  "tha-ap530:15.2_0": "nibbattati bhavābhave;",
  "tha-ap530:15.3_0": "Dāsidāsā anucarā,",
  "tha-ap530:15.4_0": "honti cittānuvattakā.",
  "tha-ap530:16.1_0": "Yamhi āyuppamāṇamhi,",
  "tha-ap530:16.2_0": "jāyate mānuse bhave;",
  "tha-ap530:16.3_0": "Tato na hāyate āyu,",
  "tha-ap530:16.4_0": "tiṭṭhate yāvatāyukaṁ.",
  "tha-ap530:17.1_0": "Abbhantarā ca bāhirā,",
  "tha-ap530:17.2_0": "negamā ca saraṭṭhakā;",
  "tha-ap530:17.3_0": "Nuyuttā honti sabbepi,",
  "tha-ap530:17.4_0": "vuddhikāmā sukhicchakā.",
  "tha-ap530:18.1_0": "Bhogavā yasavā homi,",
  "tha-ap530:18.2_0": "sirimā ñātipakkhavā;",
  "tha-ap530:18.3_0": "Apetabhayasantāso,",
  "tha-ap530:18.4_0": "bhavehaṁ sabbato bhave.",
  "tha-ap530:19.1_0": "Devā manussā asurā,",
  "tha-ap530:19.2_0": "gandhabbā yakkharakkhasā;",
  "tha-ap530:19.3_0": "Sabbe te parirakkhanti,",
  "tha-ap530:19.4_0": "bhave saṁsarato sadā.",
  "tha-ap530:20.1_0": "Devaloke manusse ca,",
  "tha-ap530:20.2_0": "anubhotvā ubho yase;",
  "tha-ap530:20.3_0": "Avasāne ca nibbānaṁ,",
  "tha-ap530:20.4_0": "sivaṁ patto anuttaraṁ.",
  "tha-ap530:21.1_0": "Sambuddhamuddisitvāna,",
  "tha-ap530:21.2_0": "bodhiṁ vā tassa satthuno;",
  "tha-ap530:21.3_0": "Yo puññaṁ pasave poso,",
  "tha-ap530:21.4_0": "tassa kiṁ nāma dullabhaṁ.",
  "tha-ap530:22.1_0": "Magge phale āgame ca,",
  "tha-ap530:22.2_0": "jhānābhiññāguṇesu ca;",
  "tha-ap530:22.3_0": "Aññesaṁ adhiko hutvā,",
  "tha-ap530:22.4_0": "nibbāyāmi anāsavo.",
  "tha-ap530:23.1_0": "Purehaṁ bodhiyā pattaṁ,",
  "tha-ap530:23.2_0": "chaḍḍetvā haṭṭhamānaso;",
  "tha-ap530:23.3_0": "Imehi vīsataṅgehi,",
  "tha-ap530:23.4_0": "samaṅgī homi sabbadā.",
  "tha-ap530:24.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap530:24.2_0": "…pe…",
  "tha-ap530:24.3_0": "viharāmi anāsavo.",
  "tha-ap530:25.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap530:25.2_0": "…pe…",
  "tha-ap530:25.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap530:26.1_0": "Paṭisambhidā catasso,",
  "tha-ap530:26.2_0": "…pe…",
  "tha-ap530:26.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap530:27.1_0": "Itthaṁ sudaṁ āyasmā bodhisammajjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap530:28.1_0": "Bodhisammajjakattherassāpadānaṁ aṭṭhamaṁ."
}