{
  "anya-e1009n9:0_0": "Sādhujana-niddesa",
  "anya-e1009n9:1_0": "212.",
  "anya-e1009n9:2_0": "Kāya-kammaṁ suci tesaṁ,",
  "anya-e1009n9:3_0": "Vācā-kammaṁ anāvilaṁ;",
  "anya-e1009n9:4_0": "Mano-kammaṁ suci-suddhaṁ,",
  "anya-e1009n9:5_0": "Tādisā sujanā narā.",
  "anya-e1009n9:6_0": "213.",
  "anya-e1009n9:7_0": "Seṭṭha-vittaṁ sutaṁ paññā,",
  "anya-e1009n9:8_0": "Saddhanaṁ sattadhā hotti;",
  "anya-e1009n9:9_0": "Saddhā sīlaṁ sutaṁ cāgo,",
  "anya-e1009n9:10_0": "Paññā ceva hirottappaṁ.",
  "anya-e1009n9:11_0": "214.",
  "anya-e1009n9:12_0": "Saddhammāpi ca satteva,",
  "anya-e1009n9:13_0": "Saddhā hirī ca ottappaṁ;",
  "anya-e1009n9:14_0": "Bāhussaccaṁ dhiro ceva,",
  "anya-e1009n9:15_0": "Sati paññā ca iccevaṁ.",
  "anya-e1009n9:16_0": "215.",
  "anya-e1009n9:17_0": "Hirī-ottappa-sampannā ,",
  "anya-e1009n9:18_0": "Suktka-dhamma-samāhitā;",
  "anya-e1009n9:19_0": "Santo sappurisā loke,",
  "anya-e1009n9:20_0": "Deva-dhammāti vuccare.",
  "anya-e1009n9:21_0": "216.",
  "anya-e1009n9:22_0": "Saddho hirimā ottappī,",
  "anya-e1009n9:23_0": "Vīro pañño sa-gāravo;",
  "anya-e1009n9:24_0": "Bhabbo āpajjituṁ buddhiṁ,",
  "anya-e1009n9:25_0": "Virūḷhiñca vipullataṁ.",
  "anya-e1009n9:26_0": "217.",
  "anya-e1009n9:27_0": "Yo ve kataññū kata-vedi dhīro,",
  "anya-e1009n9:28_0": "Kalyāṇa-mitto daḷhaa-bhatto ca hoti;",
  "anya-e1009n9:29_0": "Dukkhittassa sakkaccaṁ karoti kiccaṁ,",
  "anya-e1009n9:30_0": "Tathāvidhaṁ sappurisaṁ vadanti.",
  "anya-e1009n9:31_0": "218.",
  "anya-e1009n9:32_0": "Mātā-petti-bharaṁ jantuṁ,",
  "anya-e1009n9:33_0": "Kule jeṭṭhāpacāyinaṁ;",
  "anya-e1009n9:34_0": "Saṇhaṁ sakhila-sambhāsaṁ,",
  "anya-e1009n9:35_0": "Pesuṇeyappahāyinaṁ.",
  "anya-e1009n9:36_0": "219.",
  "anya-e1009n9:37_0": "Macchera-vinaye yuttaṁ,",
  "anya-e1009n9:38_0": "Saccaṁ kodhābhituṁ naraṁ;",
  "anya-e1009n9:39_0": "Taṁ ve devā tāvatiṁsā,",
  "anya-e1009n9:40_0": "Āhu sappuriso iti.",
  "anya-e1009n9:41_0": "220.",
  "anya-e1009n9:42_0": "A-ppamādena maghavā,",
  "anya-e1009n9:43_0": "Devānaṁ seṭṭhataṁ gato;",
  "anya-e1009n9:44_0": "A-ppamādaṁ pasaṁsanti,",
  "anya-e1009n9:45_0": "Pamādo garahito sadā.",
  "anya-e1009n9:46_0": "221.",
  "anya-e1009n9:47_0": "Dānaṁ sīlaṁ pariccāgaṁ,",
  "anya-e1009n9:48_0": "Ājjavaṁ maddavaṁ tapaṁ;",
  "anya-e1009n9:49_0": "A-kodhaṁ a-vihiṁsañca,",
  "anya-e1009n9:50_0": "Khantīca a-virodhanaṁ.",
  "anya-e1009n9:51_0": "222.",
  "anya-e1009n9:52_0": "Iccete kusale dhamme,",
  "anya-e1009n9:53_0": "Ṭhite passāmi attani;",
  "anya-e1009n9:54_0": "Tato me jāyate pīti,",
  "anya-e1009n9:55_0": "Somanassañcanappakaṁ.",
  "anya-e1009n9:56_0": "223.",
  "anya-e1009n9:57_0": "Nanu teyeva santā no,",
  "anya-e1009n9:58_0": "Sāgarā na kulācalā;",
  "anya-e1009n9:59_0": "Manaṁpi mariyādaṁ ye,",
  "anya-e1009n9:60_0": "Saṁvaṭṭepi jahanti no.",
  "anya-e1009n9:61_0": "224.",
  "anya-e1009n9:62_0": "Na puppha-gandho paṭivātameti,",
  "anya-e1009n9:63_0": "Na candanaṁ taggara mallikā vā;",
  "anya-e1009n9:64_0": "Satañca gandho paṭivātameti,",
  "anya-e1009n9:65_0": "Sabbā disā sappuriso pavāyati.",
  "anya-e1009n9:66_0": "225.",
  "anya-e1009n9:67_0": "Tepi loka-hitā sattā,",
  "anya-e1009n9:68_0": "Sūriyo candimā api;",
  "anya-e1009n9:69_0": "Atthaṁ passa gamissanti,",
  "anya-e1009n9:70_0": "Niyamo kena laṅghate.",
  "anya-e1009n9:71_0": "226.",
  "anya-e1009n9:72_0": "Satthā deva-manussānaṁ,",
  "anya-e1009n9:73_0": "Vasī sopi munissaro;",
  "anya-e1009n9:74_0": "Gatova nibbutiṁ sabbe,",
  "anya-e1009n9:75_0": "Saṅkhārā na hi sassatā.",
  "anya-e1009n9:76_0": "227.",
  "anya-e1009n9:77_0": "Kareyya kusalaṁ sabbaṁ,",
  "anya-e1009n9:78_0": "Sivaṁ nibbānamāvahaṁ;",
  "anya-e1009n9:79_0": "Sareyyaa a-niccaṁ khandhaṁ,",
  "anya-e1009n9:80_0": "Nibbidā-ñāṇa-gocaraṁ.",
  "anya-e1009n9:81_0": "228.",
  "anya-e1009n9:82_0": "Yātānuyāyī ca bhavāhi māṇava,",
  "anya-e1009n9:83_0": "Allañca pāṇiṁ parivajjayassu;",
  "anya-e1009n9:84_0": "Mā cassu mittesu kadāci dubbhi,",
  "anya-e1009n9:85_0": "Mā ca vasaṁ a-satīnaṁ gaccha.",
  "anya-e1009n9:86_0": "229.",
  "anya-e1009n9:87_0": "A-sandhavaṁ nāpi ca diṭṭha-pubbaṁ,",
  "anya-e1009n9:88_0": "Yo āsanenāpi nimantayeyya;",
  "anya-e1009n9:89_0": "Tasseva atthaṁ puriso kareyya,",
  "anya-e1009n9:90_0": "Yātānuyāyītitamāhupaṇḍitā.",
  "anya-e1009n9:91_0": "230.",
  "anya-e1009n9:92_0": "Yassekarattipi ghare vaseyya,",
  "anya-e1009n9:93_0": "Yatthanna-pānaṁ puriso labheyya;",
  "anya-e1009n9:94_0": "Na tassa pāpaṁ manasāpi cinteyya,",
  "anya-e1009n9:95_0": "A-dubbha-pāṇi dahate mitta-dubbho.",
  "anya-e1009n9:96_0": "Tatīya sādhunara",
  "anya-e1009n9:97_0": "231.",
  "anya-e1009n9:98_0": "Yassa rukkhassa chāyāya,",
  "anya-e1009n9:99_0": "Nisīdeyya sayeyya vā;",
  "anya-e1009n9:100_0": "Na tassa sākhaṁ bhañjeyya,",
  "anya-e1009n9:101_0": "Mitta-dubbho hi pāpako.",
  "anya-e1009n9:102_0": "Catuttha sādhunara",
  "anya-e1009n9:103_0": "232.",
  "anya-e1009n9:104_0": "Puṇṇaṁpi ce maṁ pathaviṁ dhanena,",
  "anya-e1009n9:105_0": "Dajjitthiyā puriso sammatāya;",
  "anya-e1009n9:106_0": "Saddhā khaṇaṁ atimaññeyya taṁpi,",
  "anya-e1009n9:107_0": "Tāsaṁ vasaṁ a-satīnaṁ na gacche.",
  "anya-e1009n9:108_0": "233.",
  "anya-e1009n9:109_0": "Evaṁ kho yātaṁ anuyāyī hoti,",
  "anya-e1009n9:110_0": "Allañca pāṇiṁ dahate punevaṁ;",
  "anya-e1009n9:111_0": "A-satī ca sā so pana mittaṁ-dubbho,",
  "anya-e1009n9:112_0": "So dhammiko hohi jahassu a-dhammaṁ."
}