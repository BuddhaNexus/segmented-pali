{
  "tha-ap140:0.1_0": "Therāpadāna",
  "tha-ap140:0.2_0": "Sobhitavagga",
  "tha-ap140:0.3_0": "8 Ekapasādaniyattheraapadāna",
  "tha-ap140:1.1_0": "“Nārado iti me nāmaṁ,",
  "tha-ap140:1.2_0": "kesavo iti maṁ vidū;",
  "tha-ap140:1.3_0": "Kusalākusalaṁ esaṁ,",
  "tha-ap140:1.4_0": "agamaṁ buddhasantikaṁ.",
  "tha-ap140:2.1_0": "Mettacitto kāruṇiko,",
  "tha-ap140:2.2_0": "atthadassī mahāmuni;",
  "tha-ap140:2.3_0": "Assāsayanto satte so,",
  "tha-ap140:2.4_0": "dhammaṁ deseti cakkhumā.",
  "tha-ap140:3.1_0": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap140:3.2_0": "sire katvāna añjaliṁ;",
  "tha-ap140:3.3_0": "Satthāraṁ abhivādetvā,",
  "tha-ap140:3.4_0": "pakkāmiṁ pācināmukho.",
  "tha-ap140:4.1_0": "Sattarase kappasate,",
  "tha-ap140:4.2_0": "rājā āsi mahīpati;",
  "tha-ap140:4.3_0": "Amittatāpano nāma,",
  "tha-ap140:4.4_0": "cakkavattī mahabbalo.",
  "tha-ap140:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap140:5.2_0": "…pe…",
  "tha-ap140:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap140:6.1_0": "Itthaṁ sudaṁ āyasmā ekapasādaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap140:7.1_0": "Ekapasādaniyattherassāpadānaṁ aṭṭhamaṁ."
}