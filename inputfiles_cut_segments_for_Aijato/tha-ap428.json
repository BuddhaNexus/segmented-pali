{
  "tha-ap428:0.1_0": "Therāpadāna",
  "tha-ap428:0.2_0": "Sakiṁsammajjakavagga",
  "tha-ap428:0.3_0": "6 Ghatamaṇḍadāyakattheraapadāna",
  "tha-ap428:1.1_0": "“Sucintitaṁ bhagavantaṁ,",
  "tha-ap428:1.2_0": "lokajeṭṭhaṁ narāsabhaṁ;",
  "tha-ap428:1.3_0": "Upaviṭṭhaṁ mahāraññaṁ,",
  "tha-ap428:1.4_0": "vātābādhena pīḷitaṁ.",
  "tha-ap428:2.1_0": "Disvā cittaṁ pasādetvā,",
  "tha-ap428:2.2_0": "ghatamaṇḍamupānayiṁ;",
  "tha-ap428:2.3_0": "Katattā ācitattā ca,",
  "tha-ap428:2.4_0": "gaṅgā bhāgīrathī ayaṁ.",
  "tha-ap428:3.1_0": "Mahāsamuddā cattāro,",
  "tha-ap428:3.2_0": "ghataṁ sampajjare mama;",
  "tha-ap428:3.3_0": "Ayañca pathavī ghorā,",
  "tha-ap428:3.4_0": "appamāṇā asaṅkhiyā.",
  "tha-ap428:4.1_0": "Mama saṅkappamaññāya,",
  "tha-ap428:4.2_0": "bhavate madhusakkarā;",
  "tha-ap428:4.3_0": "Cātuddīpā ime rukkhā,",
  "tha-ap428:4.4_0": "pādapā dharaṇīruhā.",
  "tha-ap428:5.1_0": "Mama saṅkappamaññāya,",
  "tha-ap428:5.2_0": "kapparukkhā bhavanti te;",
  "tha-ap428:5.3_0": "Paññāsakkhattuṁ devindo,",
  "tha-ap428:5.4_0": "devarajjamakārayiṁ.",
  "tha-ap428:6.1_0": "Ekapaññāsakkhattuñca,",
  "tha-ap428:6.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap428:6.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap428:6.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap428:7.1_0": "Catunnavutito kappe,",
  "tha-ap428:7.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap428:7.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap428:7.4_0": "ghatamaṇḍassidaṁ phalaṁ.",
  "tha-ap428:8.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap428:8.2_0": "…pe…",
  "tha-ap428:8.3_0": "viharāmi anāsavo.",
  "tha-ap428:9.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap428:9.2_0": "…pe…",
  "tha-ap428:9.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap428:10.1_0": "Paṭisambhidā catasso,",
  "tha-ap428:10.2_0": "…pe…",
  "tha-ap428:10.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap428:11.1_0": "Itthaṁ sudaṁ āyasmā ghatamaṇḍadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap428:12.1_0": "Ghatamaṇḍadāyakattherassāpadānaṁ chaṭṭhaṁ."
}