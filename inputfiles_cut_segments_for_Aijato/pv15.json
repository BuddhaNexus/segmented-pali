{
  "pv15:0.1_0": "Petavatthu",
  "pv15:0.2_0": "Ubbarivagga",
  "pv15:0.3_0": "3. Mattāpetivatthu",
  "pv15:1.1_0": "“Naggā dubbaṇṇarūpāsi,",
  "pv15:1.2_0": "kisā dhamanisanthatā;",
  "pv15:1.3_0": "Upphāsulike kisike,",
  "pv15:1.4_0": "kā nu tvaṁ idha tiṭṭhasī”ti.",
  "pv15:2.1_0": "“Ahaṁ mattā tuvaṁ tissā,",
  "pv15:2.2_0": "sapattī te pure ahuṁ;",
  "pv15:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv15:2.4_0": "petalokaṁ ito gatā”ti.",
  "pv15:3.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv15:3.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv15:3.3_0": "Kissa kammavipākena,",
  "pv15:3.4_0": "petalokaṁ ito gatā”ti.",
  "pv15:4.1_0": "“Caṇḍī ca pharusā cāsiṁ,",
  "pv15:4.2_0": "issukī maccharī saṭhā;",
  "pv15:4.3_0": "Tāhaṁ duruttaṁ vatvāna,",
  "pv15:4.4_0": "petalokaṁ ito gatā”ti.",
  "pv15:5.1_0": "“Sabbaṁ ahampi jānāmi,",
  "pv15:5.2_0": "yathā tvaṁ caṇḍikā ahu;",
  "pv15:5.3_0": "Aññañca kho taṁ pucchāmi,",
  "pv15:5.4_0": "kenāsi paṁsukunthitā”ti.",
  "pv15:6.1_0": "“Sīsaṁnhātā tuvaṁ āsi,",
  "pv15:6.2_0": "sucivatthā alaṅkatā;",
  "pv15:6.3_0": "Ahañca kho adhimattaṁ,",
  "pv15:6.4_0": "samalaṅkatatarā tayā.",
  "pv15:7.1_0": "Tassā me pekkhamānāya,",
  "pv15:7.2_0": "sāmikena samantayi;",
  "pv15:7.3_0": "Tato me issā vipulā,",
  "pv15:7.4_0": "kodho me samajāyatha.",
  "pv15:8.1_0": "Tato paṁsuṁ gahetvāna,",
  "pv15:8.2_0": "paṁsunā taṁ hi okiriṁ;",
  "pv15:8.3_0": "Tassa kammavipākena,",
  "pv15:8.4_0": "tenamhi paṁsukunthitā”ti.",
  "pv15:9.1_0": "“Sabbaṁ ahampi jānāmi,",
  "pv15:9.2_0": "paṁsunā maṁ tvamokiri;",
  "pv15:9.3_0": "Aññañca kho taṁ pucchāmi,",
  "pv15:9.4_0": "kena khajjasi kacchuyā”ti.",
  "pv15:10.1_0": "“Bhesajjahārī ubhayo,",
  "pv15:10.2_0": "vanantaṁ agamimhase;",
  "pv15:10.3_0": "Tvañca bhesajjamāhari,",
  "pv15:10.4_0": "ahañca kapikacchuno.",
  "pv15:11.1_0": "Tassā tyājānamānāya,",
  "pv15:11.2_0": "seyyaṁ tyāhaṁ samokiriṁ;",
  "pv15:11.3_0": "Tassa kammavipākena,",
  "pv15:11.4_0": "tena khajjāmi kacchuyā”ti.",
  "pv15:12.1_0": "“Sabbaṁ ahampi jānāmi,",
  "pv15:12.2_0": "seyyaṁ me tvaṁ samokiri;",
  "pv15:12.3_0": "Aññañca kho taṁ pucchāmi,",
  "pv15:12.4_0": "kenāsi naggiyā tuvan”ti.",
  "pv15:13.1_0": "“Sahāyānaṁ samayo āsi,",
  "pv15:13.2_0": "ñātīnaṁ samitī ahu;",
  "pv15:13.3_0": "Tvañca āmantitā āsi,",
  "pv15:13.4_0": "sasāminī no ca kho ahaṁ.",
  "pv15:14.1_0": "Tassā tyājānamānāya,",
  "pv15:14.2_0": "dussaṁ tyāhaṁ apānudiṁ;",
  "pv15:14.3_0": "Tassa kammavipākena,",
  "pv15:14.4_0": "tenamhi naggiyā ahan”ti.",
  "pv15:15.1_0": "“Sabbaṁ ahampi jānāmi,",
  "pv15:15.2_0": "dussaṁ me tvaṁ apānudi;",
  "pv15:15.3_0": "Aññañca kho taṁ pucchāmi,",
  "pv15:15.4_0": "kenāsi gūthagandhinī”ti.",
  "pv15:16.1_0": "“Tava gandhañca mālañca,",
  "pv15:16.2_0": "paccagghañca vilepanaṁ;",
  "pv15:16.3_0": "Gūthakūpe atāresiṁ,",
  "pv15:16.4_0": "taṁ pāpaṁ pakataṁ mayā;",
  "pv15:16.5_0": "Tassa kammavipākena,",
  "pv15:16.6_0": "tenamhi gūthagandhinī”ti.",
  "pv15:17.1_0": "“Sabbaṁ ahampi jānāmi,",
  "pv15:17.2_0": "taṁ pāpaṁ pakataṁ tayā;",
  "pv15:17.3_0": "Aññañca kho taṁ pucchāmi,",
  "pv15:17.4_0": "kenāsi duggatā tuvan”ti.",
  "pv15:18.1_0": "“Ubhinnaṁ samakaṁ āsi,",
  "pv15:18.2_0": "yaṁ gehe vijjate dhanaṁ;",
  "pv15:18.3_0": "Santesu deyyadhammesu,",
  "pv15:18.4_0": "dīpaṁ nākāsimattano;",
  "pv15:18.5_0": "Tassa kammavipākena,",
  "pv15:18.6_0": "tenamhi duggatā ahaṁ.",
  "pv15:19.1_0": "Tadeva maṁ tvaṁ avaca,",
  "pv15:19.2_0": "‘pāpakammaṁ nisevasi;",
  "pv15:19.3_0": "Na hi pāpehi kammehi,",
  "pv15:19.4_0": "sulabhā hoti suggatī’”ti.",
  "pv15:20.1_0": "“Vāmato maṁ tvaṁ paccesi,",
  "pv15:20.2_0": "athopi maṁ usūyasi;",
  "pv15:20.3_0": "Passa pāpānaṁ kammānaṁ,",
  "pv15:20.4_0": "vipāko hoti yādiso.",
  "pv15:21.1_0": "Te gharā tā ca dāsiyo,",
  "pv15:21.2_0": "tānevābharaṇānime;",
  "pv15:21.3_0": "Te aññe paricārenti,",
  "pv15:21.4_0": "na bhogā honti sassatā.",
  "pv15:22.1_0": "Idāni bhūtassa pitā,",
  "pv15:22.2_0": "āpaṇā gehamehiti;",
  "pv15:22.3_0": "Appeva te dade kiñci,",
  "pv15:22.4_0": "mā su tāva ito agā”ti.",
  "pv15:23.1_0": "“Naggā dubbaṇṇarūpāmhi,",
  "pv15:23.2_0": "kisā dhamanisanthatā;",
  "pv15:23.3_0": "Kopīnametaṁ itthīnaṁ,",
  "pv15:23.4_0": "mā maṁ bhūtapitāddasā”ti.",
  "pv15:24.1_0": "“Handa kiṁ vā tyāhaṁ dammi,",
  "pv15:24.2_0": "Kiṁ vā tedha karomahaṁ;",
  "pv15:24.3_0": "Yena tvaṁ sukhitā assa,",
  "pv15:24.4_0": "Sabbakāmasamiddhinī”ti.",
  "pv15:25.1_0": "“Cattāro bhikkhū saṅghato,",
  "pv15:25.2_0": "cattāro pana puggale;",
  "pv15:25.3_0": "Aṭṭha bhikkhū bhojayitvā,",
  "pv15:25.4_0": "mama dakkhiṇamādisa;",
  "pv15:25.5_0": "Tadāhaṁ sukhitā hessaṁ,",
  "pv15:25.6_0": "sabbakāmasamiddhinī”ti.",
  "pv15:26.1_0": "Sādhūti sā paṭissutvā,",
  "pv15:26.2_0": "bhojayitvāṭṭha bhikkhavo;",
  "pv15:26.3_0": "Vatthehacchādayitvāna,",
  "pv15:26.4_0": "tassā dakkhiṇamādisī.",
  "pv15:27.1_0": "Samanantarānuddiṭṭhe,",
  "pv15:27.2_0": "vipāko udapajjatha;",
  "pv15:27.3_0": "Bhojanacchādanapānīyaṁ,",
  "pv15:27.4_0": "dakkhiṇāya idaṁ phalaṁ.",
  "pv15:28.1_0": "Tato suddhā sucivasanā,",
  "pv15:28.2_0": "kāsikuttamadhārinī;",
  "pv15:28.3_0": "Vicittavatthābharaṇā,",
  "pv15:28.4_0": "sapattiṁ upasaṅkami.",
  "pv15:29.1_0": "“Abhikkantena vaṇṇena,",
  "pv15:29.2_0": "yā tvaṁ tiṭṭhasi devate;",
  "pv15:29.3_0": "Obhāsentī disā sabbā,",
  "pv15:29.4_0": "osadhī viya tārakā.",
  "pv15:30.1_0": "Kena tetādiso vaṇṇo,",
  "pv15:30.2_0": "kena te idha mijjhati;",
  "pv15:30.3_0": "Uppajjanti ca te bhogā,",
  "pv15:30.4_0": "ye keci manaso piyā.",
  "pv15:31.1_0": "Pucchāmi taṁ devi mahānubhāve,",
  "pv15:31.2_0": "Manussabhūtā kimakāsi puññaṁ;",
  "pv15:31.3_0": "Kenāsi evaṁ jalitānubhāvā,",
  "pv15:31.4_0": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "pv15:32.1_0": "“Ahaṁ mattā tuvaṁ tissā,",
  "pv15:32.2_0": "sapattī te pure ahuṁ;",
  "pv15:32.3_0": "Pāpakammaṁ karitvāna,",
  "pv15:32.4_0": "petalokaṁ ito gatā.",
  "pv15:33.1_0": "Tava dinnena dānena,",
  "pv15:33.2_0": "modāmi akutobhayā;",
  "pv15:33.3_0": "Ciraṁ jīvāhi bhagini,",
  "pv15:33.4_0": "saha sabbehi ñātibhi;",
  "pv15:33.5_0": "Asokaṁ virajaṁ ṭhānaṁ,",
  "pv15:33.6_0": "āvāsaṁ vasavattinaṁ.",
  "pv15:34.1_0": "Idha dhammaṁ caritvāna,",
  "pv15:34.2_0": "Dānaṁ datvāna sobhane;",
  "pv15:34.3_0": "Vineyya maccheramalaṁ samūlaṁ,",
  "pv15:34.4_0": "Aninditā saggamupehi ṭhānan”ti.",
  "pv15:35.1_0": "Mattāpetivatthu tatiyaṁ."
}