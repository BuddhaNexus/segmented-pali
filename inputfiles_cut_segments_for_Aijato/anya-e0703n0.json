{
  "anya-e0703n0:0_0": " Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0703n0:1_0": "Mahāvaṁsapāḷi",
  "anya-e0703n0:2_0": "Pathamapariccheda",
  "anya-e0703n0:3_0": "Mahiyaṅgaṇāgamanaṁ",
  "anya-e0703n0:4_0": "1.",
  "anya-e0703n0:5_0": " Namassitvāna sambuddhaṁ, susuddhaṁ suddhavaṁsajaṁ;",
  "anya-e0703n0:6_0": "Mahāvaṁsaṁ pavakkhāmi, nānānūnādhikārikaṁ.",
  "anya-e0703n0:7_0": "2.",
  "anya-e0703n0:8_0": " Porāṇehi kato’peso, ativitthārito kvaci;",
  "anya-e0703n0:9_0": "Atīva kvaci saṁkhitto, anekapunaruttako.",
  "anya-e0703n0:10_0": "3.",
  "anya-e0703n0:11_0": " Vajjitaṁ tehi dosehi, sukhaggahaṇadhāraṇaṁ;",
  "anya-e0703n0:12_0": "Pasādasaṁvegakaraṁ, sutito ca upāgataṁ.",
  "anya-e0703n0:13_0": "4.",
  "anya-e0703n0:14_0": " Pasādajanake ṭhāne, tathā saṁvegakārake;",
  "anya-e0703n0:15_0": "Janayanto pasādañca, saṁvegañca suṇātha taṁ.",
  "anya-e0703n0:16_0": "5.",
  "anya-e0703n0:17_0": " Dīpaṅkarañhi sambuddhaṁ, passitvā no jino purā;",
  "anya-e0703n0:18_0": "Lokaṁ dukkhā pamocetuṁ, bodhāya paṇidhiṁ akā.",
  "anya-e0703n0:19_0": "6.",
  "anya-e0703n0:20_0": " Tato tañceva sambuddhaṁ, koṇḍaññaṁ maṅgalaṁ muniṁ;",
  "anya-e0703n0:21_0": "Sumanaṁ revataṁ buddhaṁ, sobhitañca mahāmuniṁ.",
  "anya-e0703n0:22_0": "7.",
  "anya-e0703n0:23_0": " Anomadassiṁ sambuddhaṁ, padumaṁ nāradaṁ jinaṁ;",
  "anya-e0703n0:24_0": "Padumuttarasambuddhaṁ, sumedhañca tathāgataṁ.",
  "anya-e0703n0:25_0": "8.",
  "anya-e0703n0:26_0": " Sujātaṁ piyadassiñca, atthadassiñca nāyakaṁ;",
  "anya-e0703n0:27_0": "Dhammadassiñca siddhatthaṁ, tissaṁ phussajinaṁ tathā.",
  "anya-e0703n0:28_0": "9.",
  "anya-e0703n0:29_0": " Vipassiṁ sikhīsambuddhaṁ, sambuddhaṁ vessabhuṁ vibhuṁ;",
  "anya-e0703n0:30_0": "Kakusandhañca sambuddhaṁ, koṇāgamanameva ca.",
  "anya-e0703n0:31_0": "10.",
  "anya-e0703n0:32_0": " Kassapaṁ sugatañca’me, sambuddhe catuvīsati;",
  "anya-e0703n0:33_0": "Ārādhetvā mahāvīro, tehi bodhāya byākato.",
  "anya-e0703n0:34_0": "11.",
  "anya-e0703n0:35_0": " Puretvā pāramī sabbā, patvā sambodhimuttamaṁ;",
  "anya-e0703n0:36_0": "Uttamo gotamo buddho, satte dukkhā pamocayi.",
  "anya-e0703n0:37_0": "12.",
  "anya-e0703n0:38_0": " Magadhesu ruvelāyaṁ, bodhimūle mahāmuni;",
  "anya-e0703n0:39_0": "Visākhapuṇṇamāyaṁ so, patto sambodhimuttamaṁ.",
  "anya-e0703n0:40_0": "13.",
  "anya-e0703n0:41_0": " Sattāhāni tahiṁ satta, so vimuttisukhaṁ paraṁ;",
  "anya-e0703n0:42_0": "Vindantaṁ madhurattañca, dassayanto vasī vasi.",
  "anya-e0703n0:43_0": "14.",
  "anya-e0703n0:44_0": " Tato bārāṇasiṁ gantvā, dhammacakkaṁ pagattayi;",
  "anya-e0703n0:45_0": "Tattha vassa vasanto’va, saṭṭhiṁ arahataṁ akā.",
  "anya-e0703n0:46_0": "15.",
  "anya-e0703n0:47_0": " Te dhammadesanatthāya, vissajjetvāna bhikkhavo;",
  "anya-e0703n0:48_0": "Vinetvā ca tato tiṁsa-sahā ye bhaddavaggiye.",
  "anya-e0703n0:49_0": "16.",
  "anya-e0703n0:50_0": " Sahassajaṭile nātho, vinetuṁ kassapādike;",
  "anya-e0703n0:51_0": "Hemante uruvelāyaṁ, vasite paripācayaṁ.",
  "anya-e0703n0:52_0": "17.",
  "anya-e0703n0:53_0": " Uruvelakassapassa, mahāyaññe upaṭṭhite;",
  "anya-e0703n0:54_0": "Tassa’ttano nāgamane, icchācāraṁ vijāniya.",
  "anya-e0703n0:55_0": "18.",
  "anya-e0703n0:56_0": " Uttarakuruto bhikkhaṁ, āharitvā rimaddano;",
  "anya-e0703n0:57_0": "Anotattadahe bhutvā, sāyanhasamaye sayaṁ.",
  "anya-e0703n0:58_0": "19.",
  "anya-e0703n0:59_0": " Bodhito navame māse, phussapuṇṇamiyaṁ jino;",
  "anya-e0703n0:60_0": "Laṅkādīpaṁ visodhetuṁ, laṅkādīpamupāgami.",
  "anya-e0703n0:61_0": "20.",
  "anya-e0703n0:62_0": " Sāsanujjotanaṁ ṭhānaṁ, laṁkā ñātā jinena hi;",
  "anya-e0703n0:63_0": "Yakkhapuṇṇāya laṅkāya, yakkhā nibbā siyāti ca.",
  "anya-e0703n0:64_0": "21.",
  "anya-e0703n0:65_0": " Ñātova laṅkāmajjhamhi, gaṅgābhīre manorame;",
  "anya-e0703n0:66_0": "Tiyojanāya te ramme, ekayojanavitthate.",
  "anya-e0703n0:67_0": "22.",
  "anya-e0703n0:68_0": " Mahānāgavanuyyāne, yakkhasaṅgāmabhūmiyā;",
  "anya-e0703n0:69_0": "Laṅkādīpaṭṭhayakkhānaṁ, mahāyakkhasamāgamo.",
  "anya-e0703n0:70_0": "23.",
  "anya-e0703n0:71_0": " Upāgato taṁ sugato, mahāyakkhasamāgamaṁ;",
  "anya-e0703n0:72_0": "Samāgamassa majjhamhi, tattha tesaṁ siropari.",
  "anya-e0703n0:73_0": "24.",
  "anya-e0703n0:74_0": " Mahiyaṅgaṇathūpassa, ṭhāne vehāyasaṁ jino;",
  "anya-e0703n0:75_0": "Vuṭṭhivātandhakāresi, tesaṁ saṁvejanaṁ akā.",
  "anya-e0703n0:76_0": "25.",
  "anya-e0703n0:77_0": " Te bhayaṭṭhā’bhayaṁ yakkhā, ayācuṁ abhayaṁ jinaṁ;",
  "anya-e0703n0:78_0": "Jino abhayado āha, yakkhe te’ti bhayaddīte.",
  "anya-e0703n0:79_0": "26.",
  "anya-e0703n0:80_0": " Yakkhā bhayaṁ vo dukkhañca, harissāmi idaṁ ahaṁ;",
  "anya-e0703n0:81_0": "Tumhe nisajjaṭhānaṁ me, samaggā detha no idha.",
  "anya-e0703n0:82_0": "27.",
  "anya-e0703n0:83_0": " Āhu te sugataṁ yakkhā, dema mārisa te idha;",
  "anya-e0703n0:84_0": "Sabbepi sakalaṁ dīpaṁ, dehi no abhayaṁ tuvaṁ.",
  "anya-e0703n0:85_0": "28.",
  "anya-e0703n0:86_0": " Bhayaṁ sītaṁ tamaṁ tesaṁ, hantvā taṁ dinnabhūmiyaṁ;",
  "anya-e0703n0:87_0": "Cammakkhandhaṁ attharitvā, tatthā’ sīno jino tato.",
  "anya-e0703n0:88_0": "29.",
  "anya-e0703n0:89_0": " Cammakkhaṇḍaṁ pasāresi, ādittaṁ taṁ samantato;",
  "anya-e0703n0:90_0": "Ghammābhibhūtā te bhītā, ṭhitā ante samantato.",
  "anya-e0703n0:91_0": "30.",
  "anya-e0703n0:92_0": " Giridīpaṁ tato nātho, rammaṁ tesaṁ idhā’nayi;",
  "anya-e0703n0:93_0": "Tesu tattha paviṭṭhesu, yathāṭhāne ṭhapesi ca.",
  "anya-e0703n0:94_0": "31.",
  "anya-e0703n0:95_0": " Nātho taṁ saṁkhipi dhammaṁ, tadā devā samāgamuṁ;",
  "anya-e0703n0:96_0": "Tasmiṁ samāgame tesaṁ, satthā dhamma madesayi.",
  "anya-e0703n0:97_0": "32.",
  "anya-e0703n0:98_0": " Nekesaṁ pāṇakoṭīnaṁ, dhammābhisamayo ahu;",
  "anya-e0703n0:99_0": "Saraṇesu ca sīlesu, ṭhitā āsuṁ asaṁkhiyā.",
  "anya-e0703n0:100_0": "33.",
  "anya-e0703n0:101_0": " Sotāpattiphalaṁ patvā, sele sumanakūṭake;",
  "anya-e0703n0:102_0": "Mahāsumanadevindo, pūjiyaṁ yāci pūjiyaṁ.",
  "anya-e0703n0:103_0": "34.",
  "anya-e0703n0:104_0": " Siraṁ parāmasitvāna, nīlāmalasiroruho;",
  "anya-e0703n0:105_0": "Pāṇimatteadā kese, tassa pāṇa hito jino.",
  "anya-e0703n0:106_0": "35.",
  "anya-e0703n0:107_0": " So taṁ suvaṇṇacaṅkoṭa-varenādāya satthuno;",
  "anya-e0703n0:108_0": "Nisinnaṭṭhānaracite, nānāratanasañcaye.",
  "anya-e0703n0:109_0": "36.",
  "anya-e0703n0:110_0": " Sabbato sattaratane, te ṭhapetvā siroruhe;",
  "anya-e0703n0:111_0": "So indanīlathūpena, pidahesi namassi ca.",
  "anya-e0703n0:112_0": "37.",
  "anya-e0703n0:113_0": " Parinibbutamhi sambuddhe, citakato ca iddhiyā;",
  "anya-e0703n0:114_0": "Ādāya jinagīvaṭṭhiṁ, thero sarabhūnāmako.",
  "anya-e0703n0:115_0": "38.",
  "anya-e0703n0:116_0": " Therassa sāriputtassa, sisso ānīya cetiye;",
  "anya-e0703n0:117_0": "Tasmiṁyeva ṭhapetvāna, bhikkhūhi parivārito.",
  "anya-e0703n0:118_0": "39.",
  "anya-e0703n0:119_0": " Chādāpetvā medavaṇṇa-pāsāṇehi mahiddhiko;",
  "anya-e0703n0:120_0": "Thūpaṁ dvādasahatthuccaṁ, kārāpetvāna pakkami.",
  "anya-e0703n0:121_0": "40.",
  "anya-e0703n0:122_0": " Devānaṁpiyatissassa, rañño bhātukudhārako;",
  "anya-e0703n0:123_0": "Uddhacūḷābhayo nāma, disvā cetiya mabbhutaṁ.",
  "anya-e0703n0:124_0": "41.",
  "anya-e0703n0:125_0": " Taṁ chādayitvā kāresi, tiṁsahatthucca cetiyaṁ;",
  "anya-e0703n0:126_0": "Maddanto damiḷe rājā, tatraṭṭho dukkhagāmaṇi.",
  "anya-e0703n0:127_0": "42.",
  "anya-e0703n0:128_0": " Asītihatthaṁ kāresi, tassa kañjukacetiyaṁ;",
  "anya-e0703n0:129_0": "Mahiyaṅgaṇathūpoya-meso evaṁ patiṭṭhito.",
  "anya-e0703n0:130_0": "43.",
  "anya-e0703n0:131_0": " Evaṁ dīpamimaṁkatvā, manussārahamissaro;",
  "anya-e0703n0:132_0": "Uruvelamagā dhīro, uruvīra parakkamoti.",
  "anya-e0703n0:133_0": "Mahiyaṅgaṇāgamanaṁ niṭṭhitaṁ.",
  "anya-e0703n0:134_0": "Nāgadīpāgamana",
  "anya-e0703n0:135_0": "44.",
  "anya-e0703n0:136_0": " Mahākāruṇiko satthā, sabbalokahite rato;",
  "anya-e0703n0:137_0": "Bodhito pañcame vasse, vasaṁ jetavane jino.",
  "anya-e0703n0:138_0": "45.",
  "anya-e0703n0:139_0": " Mahodarassa nāgassa, tathā cūḷodarassa ca;",
  "anya-e0703n0:140_0": "Mātulabhāgineyyānaṁ, maṇipallaṅkahetukaṁ.",
  "anya-e0703n0:141_0": "46.",
  "anya-e0703n0:142_0": " Disvā sapārisajjānaṁ, saṅgāmaṁ paccupaṭṭhitaṁ;",
  "anya-e0703n0:143_0": "Sambuddho cittamāsassa, kāḷapakkhe uposathe.",
  "anya-e0703n0:144_0": "47.",
  "anya-e0703n0:145_0": " Pātoyeva samādāya, pavaraṁ pattacīvaraṁ;",
  "anya-e0703n0:146_0": "Anukampāya nāgānaṁ, nāgadīpamupāgami.",
  "anya-e0703n0:147_0": "48.",
  "anya-e0703n0:148_0": " Mahādaro’piso nāgo, tadā rājā ahiddhiko;",
  "anya-e0703n0:149_0": "Samudde nāgabhavane, dasaddhasatayojane.",
  "anya-e0703n0:150_0": "49.",
  "anya-e0703n0:151_0": " Kaṇiṭṭhikā tassa kaṇhā, vaḍḍhamānamhi pabbate;",
  "anya-e0703n0:152_0": "Nāgarājassa dinnā’si, tassa cūḷodaro suto.",
  "anya-e0703n0:153_0": "50.",
  "anya-e0703n0:154_0": " Tassa mātā mahāmātu, maṇipallaṅkamuttamaṁ;",
  "anya-e0703n0:155_0": "Datvā kālakatā nāgī, mātulena tathā hi so.",
  "anya-e0703n0:156_0": "51.",
  "anya-e0703n0:157_0": " Ahosi bhāgineyyassa, saṅgāmo paccupaṭṭhito;",
  "anya-e0703n0:158_0": "Pabbateyyā’pi nāgā te, ahesuñhi mahiddhikā.",
  "anya-e0703n0:159_0": "52.",
  "anya-e0703n0:160_0": " Samiddhisumano nāma, devo jetavane ṭhitaṁ;",
  "anya-e0703n0:161_0": "Rājāyatanamādāya, attano bhavanaṁ subhaṁ.",
  "anya-e0703n0:162_0": "53.",
  "anya-e0703n0:163_0": " Buddhānumatiyāyeva, chattākāraṁ jinopari;",
  "anya-e0703n0:164_0": "Dhārayanto upāgañchi, ṭhānaṁ taṁ pubbavuṭṭhakaṁ.",
  "anya-e0703n0:165_0": "54.",
  "anya-e0703n0:166_0": " Devo hi so nāgadīpe, manusso’nantare bhave;",
  "anya-e0703n0:167_0": "Ahosi rājāyatana-ṭhitaṭhāne sa addasa.",
  "anya-e0703n0:168_0": "55.",
  "anya-e0703n0:169_0": " Paccekabuddha bhuñjante, disvā cittaṁ pasādiya;",
  "anya-e0703n0:170_0": "Pattasodhanasākhāyo, tesaṁ pādāsi tena so.",
  "anya-e0703n0:171_0": "56.",
  "anya-e0703n0:172_0": " Nibbattitasmiṁ rukkhasmiṁ, jetuyyāne manorame;",
  "anya-e0703n0:173_0": "Dvārakoṭṭhakapassamhi, pacchā bahi ahosi so.",
  "anya-e0703n0:174_0": "57.",
  "anya-e0703n0:175_0": " Devātidevo devassa, tassa vuddhiñca passiya;",
  "anya-e0703n0:176_0": "Idaṁ ṭhāna hitatthañca, taṁ sarukkhaṁ idhānayi.",
  "anya-e0703n0:177_0": "58.",
  "anya-e0703n0:178_0": " Saṅgāmamajjhe ākāse, nisinno tattha nāyako;",
  "anya-e0703n0:179_0": "Tamaṁ tamonudo tesaṁ, nāgānaṁ hiṁsanaṁ akā.",
  "anya-e0703n0:180_0": "59.",
  "anya-e0703n0:181_0": " Assāsento bhayaṭṭe te, ālokaṁ paviddhaṁsayi;",
  "anya-e0703n0:182_0": "Te disvā sugataṁ tuṭṭhā, pāde vandiṁsu satthuno.",
  "anya-e0703n0:183_0": "60.",
  "anya-e0703n0:184_0": " Tesaṁ dhammamadesesi, sāmaggikaraṇaṁ jino;",
  "anya-e0703n0:185_0": "Ubho’pi te patītā taṁ, pallaṅkaṁ munino aduṁ.",
  "anya-e0703n0:186_0": "61.",
  "anya-e0703n0:187_0": " Satthā bhūmigato tattha, pasīdisvāna āsane;",
  "anya-e0703n0:188_0": "Tehi dibbannapānehi, nāgarājehi tappito.",
  "anya-e0703n0:189_0": "62.",
  "anya-e0703n0:190_0": " Te jalaṭṭhe talaṭṭhe ca, bhujage’sītikoṭiyo;",
  "anya-e0703n0:191_0": "Saraṇesu ca sīlesu, patiṭṭhāpesi nāyako.",
  "anya-e0703n0:192_0": "63.",
  "anya-e0703n0:193_0": " Mahodarassa nāgassa, mātulo maṇiakkhiko;",
  "anya-e0703n0:194_0": "Kalyāṇiyaṁ nāgarājā, yuddhaṁ kātuṁ tahiṁ gato.",
  "anya-e0703n0:195_0": "64.",
  "anya-e0703n0:196_0": " Buddhagāmamhi paṭhame, sutvā saddhammadesanaṁ;",
  "anya-e0703n0:197_0": "Ṭhito saraṇasīlesu, tatthā’yāci tathāgataṁ.",
  "anya-e0703n0:198_0": "65.",
  "anya-e0703n0:199_0": " Mahatī anukampāno, katā nātha tayā ayaṁ;",
  "anya-e0703n0:200_0": "Tavānāgamane sabbe, mayaṁ bhasmī bhavāmahe.",
  "anya-e0703n0:201_0": "66.",
  "anya-e0703n0:202_0": " Anukampā mahī pite, visuṁ hotu mahodaya;",
  "anya-e0703n0:203_0": "Punarāgamanenettha, vāsabhūmiṁ mamā mama.",
  "anya-e0703n0:204_0": "67.",
  "anya-e0703n0:205_0": " Adhivāsayitvā bhagavā, tuṇhibhāve nidhāgamaṁ;",
  "anya-e0703n0:206_0": "Patiṭṭhāpesi tattheva, rājāyatanacetiyaṁ.",
  "anya-e0703n0:207_0": "68.",
  "anya-e0703n0:208_0": " Tañcapi rājāyatanaṁ, pallañcaṅka mahārahaṁ;",
  "anya-e0703n0:209_0": "Appesi nāgarājūnaṁ, lokanātho namassituṁ.",
  "anya-e0703n0:210_0": "69.",
  "anya-e0703n0:211_0": " Paribhogacetiyaṁ mayhaṁ, nāgarājā namassatha;",
  "anya-e0703n0:212_0": "Taṁ bhavissati votātā, hitāya ca sukhāya ca.",
  "anya-e0703n0:213_0": "70.",
  "anya-e0703n0:214_0": " Iccevamādiṁ sugato, nāgānaṁ anusāsanaṁ;",
  "anya-e0703n0:215_0": "Katvā jetavanaṁ eva, gato lokānukampakoti.",
  "anya-e0703n0:216_0": "Nāgadīpāgamanaṁ",
  "anya-e0703n0:217_0": "Kalyāṇāgamanaṁ",
  "anya-e0703n0:218_0": "71.",
  "anya-e0703n0:219_0": " Tato so tatiye vasse,",
  "anya-e0703n0:220_0": "Nāgindo maṇiakkhiko;",
  "anya-e0703n0:221_0": "Upasaṅkamma sambuddhaṁ,",
  "anya-e0703n0:222_0": "Satasaṅghaṁ nimantayi.",
  "anya-e0703n0:223_0": "72.",
  "anya-e0703n0:224_0": " Bodhito aṭṭhame vasse, vasaṁ jetavane jino;",
  "anya-e0703n0:225_0": "Nātho pañcahi bhikkhūnaṁ, satehi parivārito.",
  "anya-e0703n0:226_0": "73.",
  "anya-e0703n0:227_0": " Dutiye divase bhatta-kāle ārocite jino;",
  "anya-e0703n0:228_0": "Ramme vesākhamāsamhi, puṇṇamāyaṁ munissaro.",
  "anya-e0703n0:229_0": "74.",
  "anya-e0703n0:230_0": " Tattheva pārupitvāna, saṅghāṭiṁ pattamādiya;",
  "anya-e0703n0:231_0": "Āgā kalyāṇidesaṁ taṁ, maṇiakkhinivesanaṁ.",
  "anya-e0703n0:232_0": "75.",
  "anya-e0703n0:233_0": " Kalyāṇi cetiyaṭhāne, kate ratanamaṇḍape;",
  "anya-e0703n0:234_0": "Mahārahamhi pallaṅke, sahasaṅghenu’pāvisi.",
  "anya-e0703n0:235_0": "76.",
  "anya-e0703n0:236_0": " Dibbehi khajjabhojjehi, sagaṇo sagaṇaṁ jinaṁ;",
  "anya-e0703n0:237_0": "Nāgarājā dhammarājaṁ, santappesi sumānaso.",
  "anya-e0703n0:238_0": "77.",
  "anya-e0703n0:239_0": " Tattha dhammaṁ desayitvā, satthā lonukampako;",
  "anya-e0703n0:240_0": "Uggantvā sumane kūṭe, padaṁ dassesi nāyako.",
  "anya-e0703n0:241_0": "78.",
  "anya-e0703n0:242_0": " Tasmiṁ pabbatapādamhi, sahasaṅgho yathāsukhaṁ;",
  "anya-e0703n0:243_0": "Divā vihāraṁ katvāna, dīghavāpi mupāgami.",
  "anya-e0703n0:244_0": "79.",
  "anya-e0703n0:245_0": " Tattha cetiyaṭhānamhi, sasaṅghova nisīdiya;",
  "anya-e0703n0:246_0": "Samādhiṁ appayī nātho, ṭhānāgāravapattiyā.",
  "anya-e0703n0:247_0": "80.",
  "anya-e0703n0:248_0": " Tato vuṭṭhāya ṭhānamhā, ṭhānāṭhānesu kovido;",
  "anya-e0703n0:249_0": "Mahāmeghavanārāma-ṭhānamāga mahāmuni.",
  "anya-e0703n0:250_0": "81.",
  "anya-e0703n0:251_0": " Mahābodhiṭhitaṭhāne, nisīditvā sasāvako;",
  "anya-e0703n0:252_0": "Samādhiṁ appayī nātho, mahāthūpaṭhite tathā.",
  "anya-e0703n0:253_0": "82.",
  "anya-e0703n0:254_0": " Thūpārāmamhi thūpassa, ṭhitaṭhāne tatheva ca;",
  "anya-e0703n0:255_0": "Samādhito’tha vuṭṭhāya, silācetiyaṭhānago.",
  "anya-e0703n0:256_0": "83.",
  "anya-e0703n0:257_0": " Sahāgate devagaṇo, gaṇī samanusāsiya;",
  "anya-e0703n0:258_0": "Tato jetavanaṁ buddho, buddhasabbatthako agā.",
  "anya-e0703n0:259_0": "84.",
  "anya-e0703n0:260_0": " Evaṁ laṅkāya nātho, hitamamitamatī āyatiṁ pekkhamāno;",
  "anya-e0703n0:261_0": "Tasmiṁ kālamhi laṁkāsurabhujagagaṇādīnamatthañca passaṁ;",
  "anya-e0703n0:262_0": "Āgā tikkhattumetaṁ ativipuladayo lokadīpo sudīpaṁ;",
  "anya-e0703n0:263_0": "Dīpo tenāyamāsi sujanabahumano dhammadīpāva bhāsīti.",
  "anya-e0703n0:264_0": "Kalyāṇāgamanaṁ",
  "anya-e0703n0:265_0": "Sujanappasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n0:266_0": "Tathāgatābhigamanaṁ nāma",
  "anya-e0703n0:267_0": "Paṭhamo paricchedo."
}