{
  "pv23:0.1_0": "Petavatthu",
  "pv23:0.2_0": "Ubbarivagga",
  "pv23:0.3_0": "11. Suttapetavatthu",
  "pv23:1.1_0": "“Ahaṁ pure pabbajitassa bhikkhuno,",
  "pv23:1.2_0": "Suttaṁ adāsiṁ upasaṅkamma yācitā;",
  "pv23:1.3_0": "Tassa vipāko vipulaphalūpalabbhati,",
  "pv23:1.4_0": "Bahukā ca me uppajjare vatthakoṭiyo.",
  "pv23:2.1_0": "Pupphābhikiṇṇaṁ ramitaṁ vimānaṁ,",
  "pv23:2.2_0": "Anekacittaṁ naranārisevitaṁ;",
  "pv23:2.3_0": "Sāhaṁ bhuñjāmi ca pārupāmi ca,",
  "pv23:2.4_0": "Pahūtavittā na ca tāva khīyati.",
  "pv23:3.1_0": "Tasseva kammassa vipākamanvayā,",
  "pv23:3.2_0": "Sukhañca sātañca idhūpalabbhati;",
  "pv23:3.3_0": "Sāhaṁ gantvā punadeva mānusaṁ,",
  "pv23:3.4_0": "Kāhāmi puññāni nayayyaputta man”ti.",
  "pv23:4.1_0": "“Satta tuvaṁ vassasatā idhāgatā,",
  "pv23:4.2_0": "Jiṇṇā ca vuḍḍhā ca tahiṁ bhavissasi;",
  "pv23:4.3_0": "Sabbeva te kālakatā ca ñātakā,",
  "pv23:4.4_0": "Kiṁ tattha gantvāna ito karissasī”ti.",
  "pv23:5.1_0": "“Satteva vassāni idhāgatāya me,",
  "pv23:5.2_0": "Dibbañca sukhañca samappitāya;",
  "pv23:5.3_0": "Sāhaṁ gantvāna punadeva mānusaṁ,",
  "pv23:5.4_0": "Kāhāmi puññāni nayayyaputta man”ti.",
  "pv23:6.1_0": "So taṁ gahetvāna pasayha bāhāyaṁ,",
  "pv23:6.2_0": "Paccānayitvāna theriṁ sudubbalaṁ;",
  "pv23:6.3_0": "“Vajjesi aññampi janaṁ idhāgataṁ,",
  "pv23:6.4_0": "‘Karotha puññāni sukhūpalabbhati’.",
  "pv23:7.1_0": "Diṭṭhā mayā akatena sādhunā,",
  "pv23:7.2_0": "Petā vihaññanti tatheva manussā;",
  "pv23:7.3_0": "Kammañca katvā sukhavedanīyaṁ,",
  "pv23:7.4_0": "Devā manussā ca sukhe ṭhitā pajā”ti.",
  "pv23:8.1_0": "Suttapetavatthu ekādasamaṁ."
}