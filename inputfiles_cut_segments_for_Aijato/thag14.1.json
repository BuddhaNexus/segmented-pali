{
  "thag14.1:0.1_0": "Theragāthā",
  "thag14.1:0.2_0": "Cuddasakanipāta",
  "thag14.1:0.3_0": "Paṭhamavagga",
  "thag14.1:0.4_0": "14.1. Khadiravaniyarevatattheragāthā",
  "thag14.1:1.1_0": "“Yadā ahaṁ pabbajito,",
  "thag14.1:1.2_0": "agārasmānagāriyaṁ;",
  "thag14.1:1.3_0": "Nābhijānāmi saṅkappaṁ,",
  "thag14.1:1.4_0": "anariyaṁ dosasaṁhitaṁ.",
  "thag14.1:2.1_0": "‘Ime haññantu vajjhantu,",
  "thag14.1:2.2_0": "dukkhaṁ pappontu pāṇino’;",
  "thag14.1:2.3_0": "Saṅkappaṁ nābhijānāmi,",
  "thag14.1:2.4_0": "imasmiṁ dīghamantare.",
  "thag14.1:3.1_0": "Mettañca abhijānāmi,",
  "thag14.1:3.2_0": "appamāṇaṁ subhāvitaṁ;",
  "thag14.1:3.3_0": "Anupubbaṁ paricitaṁ,",
  "thag14.1:3.4_0": "yathā buddhena desitaṁ.",
  "thag14.1:4.1_0": "Sabbamitto sabbasakho,",
  "thag14.1:4.2_0": "sabbabhūtānukampako;",
  "thag14.1:4.3_0": "Mettacittañca bhāvemi,",
  "thag14.1:4.4_0": "abyāpajjarato sadā.",
  "thag14.1:5.1_0": "Asaṁhīraṁ asaṅkuppaṁ,",
  "thag14.1:5.2_0": "cittaṁ āmodayāmahaṁ;",
  "thag14.1:5.3_0": "Brahmavihāraṁ bhāvemi,",
  "thag14.1:5.4_0": "akāpurisasevitaṁ.",
  "thag14.1:6.1_0": "Avitakkaṁ samāpanno,",
  "thag14.1:6.2_0": "sammāsambuddhasāvako;",
  "thag14.1:6.3_0": "Ariyena tuṇhībhāvena,",
  "thag14.1:6.4_0": "upeto hoti tāvade.",
  "thag14.1:7.1_0": "Yathāpi pabbato selo,",
  "thag14.1:7.2_0": "acalo suppatiṭṭhito;",
  "thag14.1:7.3_0": "Evaṁ mohakkhayā bhikkhu,",
  "thag14.1:7.4_0": "pabbatova na vedhati.",
  "thag14.1:8.1_0": "Anaṅgaṇassa posassa,",
  "thag14.1:8.2_0": "niccaṁ sucigavesino;",
  "thag14.1:8.3_0": "Vālaggamattaṁ pāpassa,",
  "thag14.1:8.4_0": "abbhamattaṁva khāyati.",
  "thag14.1:9.1_0": "Nagaraṁ yathā paccantaṁ,",
  "thag14.1:9.2_0": "guttaṁ santarabāhiraṁ;",
  "thag14.1:9.3_0": "Evaṁ gopetha attānaṁ,",
  "thag14.1:9.4_0": "khaṇo vo mā upaccagā.",
  "thag14.1:10.1_0": "Nābhinandāmi maraṇaṁ,",
  "thag14.1:10.2_0": "nābhinandāmi jīvitaṁ;",
  "thag14.1:10.3_0": "Kālañca paṭikaṅkhāmi,",
  "thag14.1:10.4_0": "nibbisaṁ bhatako yathā.",
  "thag14.1:11.1_0": "Nābhinandāmi maraṇaṁ,",
  "thag14.1:11.2_0": "…",
  "thag14.1:11.3_0": "pe…",
  "thag14.1:11.4_0": "sampajāno patissato.",
  "thag14.1:12.1_0": "Pariciṇṇo mayā satthā,",
  "thag14.1:12.2_0": "kataṁ buddhassa sāsanaṁ;",
  "thag14.1:12.3_0": "Ohito garuko bhāro,",
  "thag14.1:12.4_0": "bhavanetti samūhatā.",
  "thag14.1:13.1_0": "Yassa catthāya pabbajito,",
  "thag14.1:13.2_0": "agārasmānagāriyaṁ;",
  "thag14.1:13.3_0": "So me attho anuppatto,",
  "thag14.1:13.4_0": "sabbasaṁyojanakkhayo.",
  "thag14.1:14.1_0": "Sampādethappamādena,",
  "thag14.1:14.2_0": "esā me anusāsanī;",
  "thag14.1:14.3_0": "Handāhaṁ parinibbissaṁ,",
  "thag14.1:14.4_0": "vippamuttomhi sabbadhī”ti.",
  "thag14.1:14.5_0": "… Khadiravaniyarevato thero …."
}