{
  "anya-e0605n2:0_0": "Vatthuvisodhanīgāthā",
  "anya-e0605n2:1_0": "4.",
  "anya-e0605n2:2_0": "Buddhoti ko buddhaguṇo ti ko so,",
  "anya-e0605n2:3_0": "Acintayādittamupāgato yo;",
  "anya-e0605n2:4_0": "Anaññasādhāraṇabhūtamatthaṁ,",
  "anya-e0605n2:5_0": "Akāsi kiṁ so kimavoca buddho.",
  "anya-e0605n2:6_0": "5.",
  "anya-e0605n2:7_0": "Visuddhakhandhasantāno buddhoti niyamo kato,",
  "anya-e0605n2:8_0": "Khandhasantānasuddhī tu guṇoti niyamo kato.",
  "anya-e0605n2:9_0": "6.",
  "anya-e0605n2:10_0": "Akāsi kiccāni dinesu pañca,",
  "anya-e0605n2:11_0": "Pasādayañciddhibalena sena;",
  "anya-e0605n2:12_0": "Janānasesaṁ cariyānukūlaṁ,",
  "anya-e0605n2:13_0": "Ñatvānavocānusayappahānaṁ."
}