{
  "tha-ap491:0.1_0": "Therāpadāna",
  "tha-ap491:0.2_0": "Paṁsukūlavagga",
  "tha-ap491:0.3_0": "9 Dhammaruciyattheraapadāna",
  "tha-ap491:1.1_0": "“Yadā dīpaṅkaro buddho,",
  "tha-ap491:1.2_0": "sumedhaṁ byākarī jino;",
  "tha-ap491:1.3_0": "‘Aparimeyye ito kappe,",
  "tha-ap491:1.4_0": "ayaṁ buddho bhavissati.",
  "tha-ap491:2.1_0": "Imassa janikā mātā,",
  "tha-ap491:2.2_0": "māyā nāma bhavissati;",
  "tha-ap491:2.3_0": "Pitā suddhodano nāma,",
  "tha-ap491:2.4_0": "ayaṁ hessati gotamo.",
  "tha-ap491:3.1_0": "Padhānaṁ padahitvāna,",
  "tha-ap491:3.2_0": "katvā dukkarakārikaṁ;",
  "tha-ap491:3.3_0": "Assatthamūle sambuddho,",
  "tha-ap491:3.4_0": "bujjhissati mahāyaso.",
  "tha-ap491:4.1_0": "Upatisso kolito ca,",
  "tha-ap491:4.2_0": "aggā hessanti sāvakā;",
  "tha-ap491:4.3_0": "Ānando nāma nāmena,",
  "tha-ap491:4.4_0": "upaṭṭhissatimaṁ jinaṁ.",
  "tha-ap491:5.1_0": "Khemā uppalavaṇṇā ca,",
  "tha-ap491:5.2_0": "aggā hessanti sāvikā;",
  "tha-ap491:5.3_0": "Citto āḷavako ceva,",
  "tha-ap491:5.4_0": "aggā hessantupāsakā.",
  "tha-ap491:6.1_0": "Khujjuttarā nandamātā,",
  "tha-ap491:6.2_0": "aggā hessantupāsikā;",
  "tha-ap491:6.3_0": "Bodhi imassa vīrassa,",
  "tha-ap491:6.4_0": "assatthoti pavuccati’.",
  "tha-ap491:7.1_0": "Idaṁ sutvāna vacanaṁ,",
  "tha-ap491:7.2_0": "asamassa mahesino;",
  "tha-ap491:7.3_0": "Āmoditā naramarū,",
  "tha-ap491:7.4_0": "namassanti katañjalī.",
  "tha-ap491:8.1_0": "Tadāhaṁ māṇavo āsiṁ,",
  "tha-ap491:8.2_0": "megho nāma susikkhito;",
  "tha-ap491:8.3_0": "Sutvā byākaraṇaṁ seṭṭhaṁ,",
  "tha-ap491:8.4_0": "sumedhassa mahāmune.",
  "tha-ap491:9.1_0": "Saṁvisaṭṭho bhavitvāna,",
  "tha-ap491:9.2_0": "sumedhe karuṇāsaye;",
  "tha-ap491:9.3_0": "Pabbajantañca taṁ vīraṁ,",
  "tha-ap491:9.4_0": "sahāva anupabbajiṁ.",
  "tha-ap491:10.1_0": "Saṁvuto pātimokkhasmiṁ,",
  "tha-ap491:10.2_0": "indriyesu ca pañcasu;",
  "tha-ap491:10.3_0": "Suddhājīvo sato vīro,",
  "tha-ap491:10.4_0": "jinasāsanakārako.",
  "tha-ap491:11.1_0": "Evaṁ viharamānohaṁ,",
  "tha-ap491:11.2_0": "pāpamittena kenaci;",
  "tha-ap491:11.3_0": "Niyojito anācāre,",
  "tha-ap491:11.4_0": "sumaggā paridhaṁsito.",
  "tha-ap491:12.1_0": "Vitakkavasiko hutvā,",
  "tha-ap491:12.2_0": "sāsanato apakkamiṁ;",
  "tha-ap491:12.3_0": "Pacchā tena kumittena,",
  "tha-ap491:12.4_0": "payutto mātughātanaṁ.",
  "tha-ap491:13.1_0": "Akariṁ ānantariyaṁ,",
  "tha-ap491:13.2_0": "ghātayiṁ duṭṭhamānaso;",
  "tha-ap491:13.3_0": "Tato cuto mahāvīciṁ,",
  "tha-ap491:13.4_0": "upapanno sudāruṇaṁ.",
  "tha-ap491:14.1_0": "Vinipātagato santo,",
  "tha-ap491:14.2_0": "saṁsariṁ dukkhito ciraṁ;",
  "tha-ap491:14.3_0": "Na puno addasaṁ vīraṁ,",
  "tha-ap491:14.4_0": "sumedhaṁ narapuṅgavaṁ.",
  "tha-ap491:15.1_0": "Asmiṁ kappe samuddamhi,",
  "tha-ap491:15.2_0": "maccho āsiṁ timiṅgalo;",
  "tha-ap491:15.3_0": "Disvāhaṁ sāgare nāvaṁ,",
  "tha-ap491:15.4_0": "gocaratthamupāgamiṁ.",
  "tha-ap491:16.1_0": "Disvā maṁ vāṇijā bhītā,",
  "tha-ap491:16.2_0": "buddhaseṭṭhamanussaruṁ;",
  "tha-ap491:16.3_0": "Gotamoti mahāghosaṁ,",
  "tha-ap491:16.4_0": "sutvā tehi udīritaṁ.",
  "tha-ap491:17.1_0": "Pubbasaññaṁ saritvāna,",
  "tha-ap491:17.2_0": "tato kālaṅkato ahaṁ;",
  "tha-ap491:17.3_0": "Sāvatthiyaṁ kule iddhe,",
  "tha-ap491:17.4_0": "jāto brāhmaṇajātiyaṁ.",
  "tha-ap491:18.1_0": "Āsiṁ dhammaruci nāma,",
  "tha-ap491:18.2_0": "sabbapāpajigucchako;",
  "tha-ap491:18.3_0": "Disvāhaṁ lokapajjotaṁ,",
  "tha-ap491:18.4_0": "jātiyā sattavassiko.",
  "tha-ap491:19.1_0": "Mahājetavanaṁ gantvā,",
  "tha-ap491:19.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap491:19.3_0": "Upemi buddhaṁ tikkhattuṁ,",
  "tha-ap491:19.4_0": "rattiyā divasassa ca.",
  "tha-ap491:20.1_0": "Tadā disvā muni āha,",
  "tha-ap491:20.2_0": "ciraṁ dhammarucīti maṁ;",
  "tha-ap491:20.3_0": "Tatohaṁ avacaṁ buddhaṁ,",
  "tha-ap491:20.4_0": "pubbakammapabhāvitaṁ.",
  "tha-ap491:21.1_0": "Suciraṁ satapuññalakkhaṇaṁ,",
  "tha-ap491:21.2_0": "Patipubbena visuddhapaccayaṁ;",
  "tha-ap491:21.3_0": "Ahamajjasupekkhanaṁ vata,",
  "tha-ap491:21.4_0": "Tava passāmi nirupamaṁ viggahaṁ.",
  "tha-ap491:22.1_0": "Suciraṁ vihatattamo mayā,",
  "tha-ap491:22.2_0": "Sucirakkhena nadī visositā;",
  "tha-ap491:22.3_0": "Suciraṁ amalaṁ visodhitaṁ,",
  "tha-ap491:22.4_0": "Nayanaṁ ñāṇamayaṁ mahāmune.",
  "tha-ap491:23.1_0": "Cirakālasamaṅgito tayā,",
  "tha-ap491:23.2_0": "Avinaṭṭho punarantaraṁ ciraṁ;",
  "tha-ap491:23.3_0": "Punarajjasamāgato tayā,",
  "tha-ap491:23.4_0": "Na hi nassanti katāni gotama.",
  "tha-ap491:24.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap491:24.2_0": "…pe…",
  "tha-ap491:24.3_0": "viharāmi anāsavo.",
  "tha-ap491:25.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap491:25.2_0": "…pe…",
  "tha-ap491:25.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap491:26.1_0": "Paṭisambhidā catasso,",
  "tha-ap491:26.2_0": "…pe…",
  "tha-ap491:26.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap491:27.1_0": "Itthaṁ sudaṁ āyasmā dhammaruciyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap491:28.1_0": "Dhammaruciyattherassāpadānaṁ navamaṁ."
}