{
  "tha-ap413:0.1_0": "Therāpadāna",
  "tha-ap413:0.2_0": "Bhaddālivagga",
  "tha-ap413:0.3_0": "1. Bhaddālittheraapadāna",
  "tha-ap413:1.1_0": "“Sumedho nāma sambuddho,",
  "tha-ap413:1.2_0": "aggo kāruṇiko muni;",
  "tha-ap413:1.3_0": "Vivekakāmo lokaggo,",
  "tha-ap413:1.4_0": "himavantamupāgami.",
  "tha-ap413:2.1_0": "Ajjhogāhetvā himavaṁ,",
  "tha-ap413:2.2_0": "sumedho lokanāyako;",
  "tha-ap413:2.3_0": "Pallaṅkaṁ ābhujitvāna,",
  "tha-ap413:2.4_0": "nisīdi purisuttamo.",
  "tha-ap413:3.1_0": "Samādhiṁ so samāpanno,",
  "tha-ap413:3.2_0": "sumedho lokanāyako;",
  "tha-ap413:3.3_0": "Sattarattindivaṁ buddho,",
  "tha-ap413:3.4_0": "nisīdi purisuttamo.",
  "tha-ap413:4.1_0": "Khāribhāraṁ gahetvāna,",
  "tha-ap413:4.2_0": "vanamajjhogahiṁ ahaṁ;",
  "tha-ap413:4.3_0": "Tatthaddasāsiṁ sambuddhaṁ,",
  "tha-ap413:4.4_0": "oghatiṇṇamanāsavaṁ.",
  "tha-ap413:5.1_0": "Sammajjaniṁ gahetvāna,",
  "tha-ap413:5.2_0": "sammajjitvāna assamaṁ;",
  "tha-ap413:5.3_0": "Catudaṇḍe ṭhapetvāna,",
  "tha-ap413:5.4_0": "akāsiṁ maṇḍapaṁ tadā.",
  "tha-ap413:6.1_0": "Sālapupphaṁ āharitvā,",
  "tha-ap413:6.2_0": "maṇḍapaṁ chādayiṁ ahaṁ;",
  "tha-ap413:6.3_0": "Pasannacitto sumano,",
  "tha-ap413:6.4_0": "abhivandiṁ tathāgataṁ.",
  "tha-ap413:7.1_0": "Yaṁ vadanti sumedhoti,",
  "tha-ap413:7.2_0": "bhūripaññaṁ sumedhasaṁ;",
  "tha-ap413:7.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap413:7.4_0": "imā gāthā abhāsatha.",
  "tha-ap413:8.1_0": "Buddhassa giramaññāya,",
  "tha-ap413:8.2_0": "sabbe devā samāgamuṁ;",
  "tha-ap413:8.3_0": "Asaṁsayaṁ buddhaseṭṭho,",
  "tha-ap413:8.4_0": "dhammaṁ deseti cakkhumā.",
  "tha-ap413:9.1_0": "Sumedho nāma sambuddho,",
  "tha-ap413:9.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap413:9.3_0": "Devasaṅghe nisīditvā,",
  "tha-ap413:9.4_0": "imā gāthā abhāsatha.",
  "tha-ap413:10.1_0": "‘Yo me sattāhaṁ maṇḍapaṁ,",
  "tha-ap413:10.2_0": "dhārayī sālachāditaṁ;",
  "tha-ap413:10.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap413:10.4_0": "suṇātha mama bhāsato.",
  "tha-ap413:11.1_0": "Devabhūto manusso vā,",
  "tha-ap413:11.2_0": "hemavaṇṇo bhavissati;",
  "tha-ap413:11.3_0": "Pahūtabhogo hutvāna,",
  "tha-ap413:11.4_0": "kāmabhogī bhavissati.",
  "tha-ap413:12.1_0": "Saṭṭhi nāgasahassāni,",
  "tha-ap413:12.2_0": "sabbālaṅkārabhūsitā;",
  "tha-ap413:12.3_0": "Suvaṇṇakacchā mātaṅgā,",
  "tha-ap413:12.4_0": "hemakappanavāsasā.",
  "tha-ap413:13.1_0": "Ārūḷhā gāmaṇīyehi,",
  "tha-ap413:13.2_0": "tomaraṅkusapāṇibhi;",
  "tha-ap413:13.3_0": "Sāyaṁ pāto upaṭṭhānaṁ,",
  "tha-ap413:13.4_0": "āgamissantimaṁ naraṁ;",
  "tha-ap413:13.5_0": "Tehi nāgehi parivuto,",
  "tha-ap413:13.6_0": "ramissati ayaṁ naro.",
  "tha-ap413:14.1_0": "Saṭṭhi assasahassāni,",
  "tha-ap413:14.2_0": "sabbālaṅkārabhūsitā;",
  "tha-ap413:14.3_0": "Ājānīyāva jātiyā,",
  "tha-ap413:14.4_0": "sindhavā sīghavāhino.",
  "tha-ap413:15.1_0": "Ārūḷhā gāmaṇīyehi,",
  "tha-ap413:15.2_0": "illiyācāpadhāribhi;",
  "tha-ap413:15.3_0": "Parivāressantimaṁ niccaṁ,",
  "tha-ap413:15.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap413:16.1_0": "Saṭṭhi rathasahassāni,",
  "tha-ap413:16.2_0": "sabbālaṅkārabhūsitā;",
  "tha-ap413:16.3_0": "Dīpā athopi veyagghā,",
  "tha-ap413:16.4_0": "sannaddhā ussitaddhajā.",
  "tha-ap413:17.1_0": "Ārūḷhā gāmaṇīyehi,",
  "tha-ap413:17.2_0": "cāpahatthehi vammibhi;",
  "tha-ap413:17.3_0": "Parivāressantimaṁ niccaṁ,",
  "tha-ap413:17.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap413:18.1_0": "Saṭṭhi gāmasahassāni,",
  "tha-ap413:18.2_0": "paripuṇṇāni sabbaso;",
  "tha-ap413:18.3_0": "Pahūtadhanadhaññāni,",
  "tha-ap413:18.4_0": "susamiddhāni sabbaso;",
  "tha-ap413:18.5_0": "Sadā pātubhavissanti,",
  "tha-ap413:18.6_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap413:19.1_0": "Hatthī assā rathā pattī,",
  "tha-ap413:19.2_0": "senā ca caturaṅginī;",
  "tha-ap413:19.3_0": "Parivāressantimaṁ niccaṁ,",
  "tha-ap413:19.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap413:20.1_0": "Aṭṭhārase kappasate,",
  "tha-ap413:20.2_0": "devaloke ramissati;",
  "tha-ap413:20.3_0": "Sahassakkhattuṁ rājā ca,",
  "tha-ap413:20.4_0": "cakkavattī bhavissati.",
  "tha-ap413:21.1_0": "Satānaṁ tīṇikkhattuñca,",
  "tha-ap413:21.2_0": "devarajjaṁ karissati;",
  "tha-ap413:21.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap413:21.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap413:22.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap413:22.2_0": "okkākakulasambhavo;",
  "tha-ap413:22.3_0": "Gotamo nāma gottena,",
  "tha-ap413:22.4_0": "satthā loke bhavissati.",
  "tha-ap413:23.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap413:23.2_0": "oraso dhammanimmito;",
  "tha-ap413:23.3_0": "Sabbāsave pariññāya,",
  "tha-ap413:23.4_0": "viharissatināsavo’.",
  "tha-ap413:24.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap413:24.2_0": "addasaṁ lokanāyakaṁ;",
  "tha-ap413:24.3_0": "Etthantaramupādāya,",
  "tha-ap413:24.4_0": "gavesiṁ amataṁ padaṁ.",
  "tha-ap413:25.1_0": "Lābhā mayhaṁ suladdhaṁ me,",
  "tha-ap413:25.2_0": "yamahaññāsi sāsanaṁ;",
  "tha-ap413:25.3_0": "Tisso vijjā anuppattā,",
  "tha-ap413:25.4_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap413:26.1_0": "Namo te purisājañña,",
  "tha-ap413:26.2_0": "namo te purisuttama;",
  "tha-ap413:26.3_0": "Tava ñāṇaṁ pakittetvā,",
  "tha-ap413:26.4_0": "pattomhi acalaṁ padaṁ.",
  "tha-ap413:27.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap413:27.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap413:27.3_0": "Sabbattha sukhito homi,",
  "tha-ap413:27.4_0": "phalaṁ me ñāṇakittane.",
  "tha-ap413:28.1_0": "Idaṁ pacchimakaṁ mayhaṁ,",
  "tha-ap413:28.2_0": "carimo vattate bhavo;",
  "tha-ap413:28.3_0": "Nāgova bandhanaṁ chetvā,",
  "tha-ap413:28.4_0": "viharāmi anāsavo.",
  "tha-ap413:29.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap413:29.2_0": "bhavā sabbe samūhatā;",
  "tha-ap413:29.3_0": "Nāgova bandhanaṁ chetvā,",
  "tha-ap413:29.4_0": "viharāmi anāsavo.",
  "tha-ap413:30.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap413:30.2_0": "mama buddhassa santike;",
  "tha-ap413:30.3_0": "Tisso vijjā anuppattā,",
  "tha-ap413:30.4_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap413:31.1_0": "Paṭisambhidā catasso,",
  "tha-ap413:31.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap413:31.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap413:31.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap413:32.1_0": "Itthaṁ sudaṁ āyasmā bhaddālitthero imā gāthāyo abhāsitthāti.",
  "tha-ap413:33.1_0": "Bhaddālittherassāpadānaṁ paṭhamaṁ."
}