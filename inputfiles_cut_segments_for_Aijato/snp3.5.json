{
  "snp3.5:0.1_0": "Sutta Nipāta 3.5",
  "snp3.5:0.2_0": "Māghasutta",
  "snp3.5:1.1_0": "Evaṁ me sutaṁ—",
  "snp3.5:1.2_0": " ekaṁ samayaṁ bhagavā rājagahe viharati gijjhakūṭe pabbate.",
  "snp3.5:1.3_0": "Atha kho māgho māṇavo yena bhagavā tenupasaṅkami; upasaṅkamitvā bhagavatā saddhiṁ sammodi.",
  "snp3.5:1.4_0": "Sammodanīyaṁ kathaṁ sāraṇīyaṁ vītisāretvā ekamantaṁ nisīdi.",
  "snp3.5:1.5_0": "Ekamantaṁ nisinno kho māgho māṇavo bhagavantaṁ etadavoca:",
  "snp3.5:2.1_0": "“Ahañhi, bho gotama, dāyako dānapati vadaññū yācayogo;",
  "snp3.5:2.2_0": "dhammena bhoge pariyesāmi;",
  "snp3.5:2.3_0": "dhammena bhoge pariyesitvā dhammaladdhehi bhogehi dhammādhigatehi ekassapi dadāmi dvinnampi tiṇṇampi catunnampi pañcannampi channampi sattannampi aṭṭhannampi navannampi dasannampi dadāmi, vīsāyapi tiṁsāyapi cattālīsāyapi paññāsāyapi dadāmi, satassapi dadāmi, bhiyyopi dadāmi.",
  "snp3.5:2.4_0": "Kaccāhaṁ, bho gotama, evaṁ dadanto evaṁ yajanto bahuṁ puññaṁ pasavāmī”ti?",
  "snp3.5:3.1_0": "“Taggha tvaṁ, māṇava, evaṁ dadanto evaṁ yajanto bahuṁ puññaṁ pasavasi.",
  "snp3.5:3.2_0": "Yo kho, māṇava, dāyako dānapati vadaññū yācayogo;",
  "snp3.5:3.3_0": "dhammena bhoge pariyesati;",
  "snp3.5:3.4_0": "dhammena bhoge pariyesitvā dhammaladdhehi bhogehi dhammādhigatehi ekassapi dadāti …pe…",
  "snp3.5:3.4_1": "satassapi dadāti, bhiyyopi dadāti, bahuṁ so puññaṁ pasavatī”ti.",
  "snp3.5:3.5_0": "Atha kho māgho māṇavo bhagavantaṁ gāthāya ajjhabhāsi—",
  "snp3.5:4.1_0": "“Pucchāmahaṁ gotamaṁ vadaññuṁ,",
  "snp3.5:4.2_0": "(iti māgho māṇavo)",
  "snp3.5:4.3_0": "Kāsāyavāsiṁ agahaṁ carantaṁ;",
  "snp3.5:4.4_0": "Yo yācayogo dānapati gahaṭṭho,",
  "snp3.5:4.5_0": "Puññatthiko yajati puññapekkho;",
  "snp3.5:4.6_0": "Dadaṁ paresaṁ idha annapānaṁ,",
  "snp3.5:4.7_0": "Kathaṁ hutaṁ yajamānassa sujjhe”.",
  "snp3.5:5.1_0": "“Yo yācayogo dānapati gahaṭṭho,",
  "snp3.5:5.2_0": "(māghāti bhagavā)",
  "snp3.5:5.3_0": "Puññatthiko yajati puññapekkho;",
  "snp3.5:5.4_0": "Dadaṁ paresaṁ idha annapānaṁ,",
  "snp3.5:5.5_0": "Ārādhaye dakkhiṇeyyebhi tādi”.",
  "snp3.5:6.1_0": "“Yo yācayogo dānapati gahaṭṭho,",
  "snp3.5:6.2_0": "(iti māgho māṇavo)",
  "snp3.5:6.3_0": "Puññatthiko yajati puññapekkho;",
  "snp3.5:6.4_0": "Dadaṁ paresaṁ idha annapānaṁ,",
  "snp3.5:6.5_0": "Akkhāhi me bhagavā dakkhiṇeyye”.",
  "snp3.5:7.1_0": "“Ye ve asattā vicaranti loke,",
  "snp3.5:7.2_0": "Akiñcanā kevalino yatattā;",
  "snp3.5:7.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:7.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:8.1_0": "Ye sabbasaṁyojanabandhanacchidā,",
  "snp3.5:8.2_0": "Dantā vimuttā anīghā nirāsā;",
  "snp3.5:8.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:8.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:9.1_0": "Ye sabbasaṁyojanavippamuttā,",
  "snp3.5:9.2_0": "Dantā vimuttā anīghā nirāsā;",
  "snp3.5:9.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:9.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:10.1_0": "Rāgañca dosañca pahāya mohaṁ,",
  "snp3.5:10.2_0": "Khīṇāsavā vūsitabrahmacariyā;",
  "snp3.5:10.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:10.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:11.1_0": "Yesu na māyā vasati na māno,",
  "snp3.5:11.2_0": "Khīṇāsavā vūsitabrahmacariyā;",
  "snp3.5:11.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:11.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:12.1_0": "Ye vītalobhā amamā nirāsā,",
  "snp3.5:12.2_0": "Khīṇāsavā vūsitabrahmacariyā;",
  "snp3.5:12.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:12.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:13.1_0": "Ye ve na taṇhāsu upātipannā,",
  "snp3.5:13.2_0": "Vitareyya oghaṁ amamā caranti;",
  "snp3.5:13.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:13.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:14.1_0": "Yesaṁ taṇhā natthi kuhiñci loke,",
  "snp3.5:14.2_0": "Bhavābhavāya idha vā huraṁ vā;",
  "snp3.5:14.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:14.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:15.1_0": "Ye kāme hitvā agahā caranti,",
  "snp3.5:15.2_0": "Susaññatattā tasaraṁva ujjuṁ;",
  "snp3.5:15.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:15.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:16.1_0": "Ye vītarāgā susamāhitindriyā,",
  "snp3.5:16.2_0": "Candova rāhuggahaṇā pamuttā;",
  "snp3.5:16.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:16.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:17.1_0": "Samitāvino vītarāgā akopā,",
  "snp3.5:17.2_0": "Yesaṁ gatī natthidha vippahāya;",
  "snp3.5:17.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:17.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:18.1_0": "Jahitvā jātimaraṇaṁ asesaṁ,",
  "snp3.5:18.2_0": "Kathaṅkathiṁ sabbamupātivattā;",
  "snp3.5:18.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:18.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:19.1_0": "Ye attadīpā vicaranti loke,",
  "snp3.5:19.2_0": "Akiñcanā sabbadhi vippamuttā;",
  "snp3.5:19.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:19.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:20.1_0": "Ye hettha jānanti yathā tathā idaṁ,",
  "snp3.5:20.2_0": "Ayamantimā natthi punabbhavoti;",
  "snp3.5:20.3_0": "Kālena tesu habyaṁ pavecche,",
  "snp3.5:20.4_0": "Yo brāhmaṇo puññapekkho yajetha.",
  "snp3.5:21.1_0": "Yo vedagū jhānarato satīmā,",
  "snp3.5:21.2_0": "Sambodhipatto saraṇaṁ bahūnaṁ;",
  "snp3.5:21.3_0": "Kālena tamhi habyaṁ pavecche,",
  "snp3.5:21.4_0": "Yo brāhmaṇo puññapekkho yajetha”.",
  "snp3.5:22.1_0": "“Addhā amoghā mama pucchanā ahu,",
  "snp3.5:22.2_0": "(iti māgho māṇavo)",
  "snp3.5:22.3_0": "Akkhāsi me bhagavā dakkhiṇeyye;",
  "snp3.5:22.4_0": "Tvañhettha jānāsi yathā tathā idaṁ,",
  "snp3.5:22.5_0": "Tathā hi te vidito esa dhammo.",
  "snp3.5:23.1_0": "Yo yācayogo dānapati gahaṭṭho,",
  "snp3.5:23.2_0": "Puññatthiko yajati puññapekkho;",
  "snp3.5:23.3_0": "Dadaṁ paresaṁ idha annapānaṁ,",
  "snp3.5:23.4_0": "Akkhāhi me bhagavā yaññasampadaṁ”.",
  "snp3.5:24.1_0": "“Yajassu yajamāno māghāti bhagavā,",
  "snp3.5:24.2_0": "Sabbattha ca vippasādehi cittaṁ;",
  "snp3.5:24.3_0": "Ārammaṇaṁ yajamānassa yañño,",
  "snp3.5:24.4_0": "Ettha patiṭṭhāya jahāti dosaṁ.",
  "snp3.5:25.1_0": "So vītarāgo pavineyya dosaṁ,",
  "snp3.5:25.2_0": "Mettaṁ cittaṁ bhāvayamappamāṇaṁ;",
  "snp3.5:25.3_0": "Rattindivaṁ satatamappamatto,",
  "snp3.5:25.4_0": "Sabbā disā pharati appamaññaṁ”.",
  "snp3.5:26.1_0": "“Ko sujjhati muccati bajjhatī ca,",
  "snp3.5:26.2_0": "Kenattanā gacchati brahmalokaṁ;",
  "snp3.5:26.3_0": "Ajānato me muni brūhi puṭṭho,",
  "snp3.5:26.4_0": "Bhagavā hi me sakkhi brahmajjadiṭṭho;",
  "snp3.5:26.5_0": "Tuvañhi no brahmasamosi saccaṁ,",
  "snp3.5:26.6_0": "Kathaṁ upapajjati brahmalokaṁ jutima”.",
  "snp3.5:27.1_0": "“Yo yajati tividhaṁ yaññasampadaṁ,",
  "snp3.5:27.2_0": "(māghāti bhagavā)",
  "snp3.5:27.3_0": "Ārādhaye dakkhiṇeyyebhi tādi;",
  "snp3.5:27.4_0": "Evaṁ yajitvā sammā yācayogo,",
  "snp3.5:27.5_0": "Upapajjati brahmalokanti brūmī”ti.",
  "snp3.5:28.1_0": "Evaṁ vutte, māgho māṇavo bhagavantaṁ etadavoca:",
  "snp3.5:28.2_0": "“abhikkantaṁ, bho gotama …pe…",
  "snp3.5:28.3_0": "ajjatagge pāṇupetaṁ saraṇaṁ gatan”ti.",
  "snp3.5:28.4_0": "Māghasuttaṁ pañcamaṁ."
}