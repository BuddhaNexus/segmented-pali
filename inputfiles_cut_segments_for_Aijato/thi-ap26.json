{
  "thi-ap26:0.1_0": "Therīapadāna",
  "thi-ap26:0.2_0": "Kuṇḍalakesīvagga",
  "thi-ap26:0.3_0": "6. Soṇātherīapadāna",
  "thi-ap26:1.1_0": "“Padumuttaro nāma jino,",
  "thi-ap26:1.2_0": "sabbadhammāna pāragū;",
  "thi-ap26:1.3_0": "Ito satasahassamhi,",
  "thi-ap26:1.4_0": "kappe uppajji nāyako.",
  "thi-ap26:2.1_0": "Tadā seṭṭhikule jātā,",
  "thi-ap26:2.2_0": "sukhitā pūjitā piyā;",
  "thi-ap26:2.3_0": "Upetvā taṁ munivaraṁ,",
  "thi-ap26:2.4_0": "assosiṁ madhuraṁ vacaṁ.",
  "thi-ap26:3.1_0": "Āraddhavīriyānaggaṁ,",
  "thi-ap26:3.2_0": "vaṇṇesi bhikkhuniṁ jino;",
  "thi-ap26:3.3_0": "Taṁ sutvā muditā hutvā,",
  "thi-ap26:3.4_0": "kāraṁ katvāna satthuno.",
  "thi-ap26:4.1_0": "Abhivādiya sambuddhaṁ,",
  "thi-ap26:4.2_0": "ṭhānaṁ taṁ patthayiṁ tadā;",
  "thi-ap26:4.3_0": "Anumodi mahāvīro,",
  "thi-ap26:4.4_0": "‘sijjhataṁ paṇidhī tava.",
  "thi-ap26:5.1_0": "Satasahassito kappe,",
  "thi-ap26:5.2_0": "okkākakulasambhavo;",
  "thi-ap26:5.3_0": "Gotamo nāma gottena,",
  "thi-ap26:5.4_0": "satthā loke bhavissati.",
  "thi-ap26:6.1_0": "Tassa dhammesu dāyādā,",
  "thi-ap26:6.2_0": "orasā dhammanimmitā;",
  "thi-ap26:6.3_0": "Soṇāti nāma nāmena,",
  "thi-ap26:6.4_0": "hessati satthu sāvikā’.",
  "thi-ap26:7.1_0": "Taṁ sutvā muditā hutvā,",
  "thi-ap26:7.2_0": "yāvajīvaṁ tadā jinaṁ;",
  "thi-ap26:7.3_0": "Mettacittā paricariṁ,",
  "thi-ap26:7.4_0": "paccayehi vināyakaṁ.",
  "thi-ap26:8.1_0": "Tena kammena sukatena,",
  "thi-ap26:8.2_0": "cetanāpaṇidhīhi ca;",
  "thi-ap26:8.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap26:8.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap26:9.1_0": "Pacchime ca bhave dāni,",
  "thi-ap26:9.2_0": "jātā seṭṭhikule ahaṁ;",
  "thi-ap26:9.3_0": "Sāvatthiyaṁ puravare,",
  "thi-ap26:9.4_0": "iddhe phīte mahaddhane.",
  "thi-ap26:10.1_0": "Yadā ca yobbanappattā,",
  "thi-ap26:10.2_0": "gantvā patikulaṁ ahaṁ;",
  "thi-ap26:10.3_0": "Dasa puttāni ajaniṁ,",
  "thi-ap26:10.4_0": "surūpāni visesato.",
  "thi-ap26:11.1_0": "Sukhedhitā ca te sabbe,",
  "thi-ap26:11.2_0": "jananettamanoharā;",
  "thi-ap26:11.3_0": "Amittānampi rucitā,",
  "thi-ap26:11.4_0": "mama pageva te piyā.",
  "thi-ap26:12.1_0": "Tato mayhaṁ akāmāya,",
  "thi-ap26:12.2_0": "dasaputtapurakkhato;",
  "thi-ap26:12.3_0": "Pabbajittha sa me bhattā,",
  "thi-ap26:12.4_0": "devadevassa sāsane.",
  "thi-ap26:13.1_0": "Tadekikā vicintesiṁ,",
  "thi-ap26:13.2_0": "‘jīvitenālamatthu me;",
  "thi-ap26:13.3_0": "Cattāya patiputtehi,",
  "thi-ap26:13.4_0": "vuḍḍhāya ca varākiyā.",
  "thi-ap26:14.1_0": "Ahampi tattha gacchissaṁ,",
  "thi-ap26:14.2_0": "sampatto yattha me pati’;",
  "thi-ap26:14.3_0": "Evāhaṁ cintayitvāna,",
  "thi-ap26:14.4_0": "pabbajiṁ anagāriyaṁ.",
  "thi-ap26:15.1_0": "Tato ca maṁ bhikkhuniyo,",
  "thi-ap26:15.2_0": "ekaṁ bhikkhunupassaye;",
  "thi-ap26:15.3_0": "Vihāya gacchumovādaṁ,",
  "thi-ap26:15.4_0": "‘tāpehi udakaṁ’ iti.",
  "thi-ap26:16.1_0": "Tadā udakamāhitvā,",
  "thi-ap26:16.2_0": "okiritvāna kumbhiyā;",
  "thi-ap26:16.3_0": "Culle ṭhapetvā āsīnā,",
  "thi-ap26:16.4_0": "tato cittaṁ samādahiṁ.",
  "thi-ap26:17.1_0": "Khandhe aniccato disvā,",
  "thi-ap26:17.2_0": "dukkhato ca anattato;",
  "thi-ap26:17.3_0": "Khepetvā āsave sabbe,",
  "thi-ap26:17.4_0": "arahattamapāpuṇiṁ.",
  "thi-ap26:18.1_0": "Tadāgantvā bhikkhuniyo,",
  "thi-ap26:18.2_0": "uṇhodakamapucchisuṁ;",
  "thi-ap26:18.3_0": "Tejodhātumadhiṭṭhāya,",
  "thi-ap26:18.4_0": "khippaṁ santāpayiṁ jalaṁ.",
  "thi-ap26:19.1_0": "Vimhitā tā jinavaraṁ,",
  "thi-ap26:19.2_0": "etamatthamasāvayuṁ;",
  "thi-ap26:19.3_0": "Taṁ sutvā mudito nātho,",
  "thi-ap26:19.4_0": "imaṁ gāthaṁ abhāsatha.",
  "thi-ap26:20.1_0": "‘Yo ca vassasataṁ jīve,",
  "thi-ap26:20.2_0": "kusīto hīnavīriyo;",
  "thi-ap26:20.3_0": "Ekāhaṁ jīvitaṁ seyyo,",
  "thi-ap26:20.4_0": "vīriyamārabhato daḷhaṁ’.",
  "thi-ap26:21.1_0": "Ārādhito mahāvīro,",
  "thi-ap26:21.2_0": "mayā suppaṭipattiyā;",
  "thi-ap26:21.3_0": "Āraddhavīriyānaggaṁ,",
  "thi-ap26:21.4_0": "mamāha sa mahāmuni.",
  "thi-ap26:22.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap26:22.2_0": "…pe…",
  "thi-ap26:22.3_0": "viharāmi anāsavā.",
  "thi-ap26:23.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap26:23.2_0": "…pe…",
  "thi-ap26:23.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap26:24.1_0": "Paṭisambhidā catasso,",
  "thi-ap26:24.2_0": "…pe…",
  "thi-ap26:24.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap26:25.1_0": "Itthaṁ sudaṁ soṇā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap26:26.1_0": "Soṇātheriyāpadānaṁ chaṭṭhaṁ."
}