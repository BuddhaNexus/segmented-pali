{
  "pv18:0.1_0": "Petavatthu",
  "pv18:0.2_0": "Ubbarivagga",
  "pv18:0.3_0": "6. Kaṇhapetavatthu",
  "pv18:1.1_0": "“Uṭṭhehi kaṇha kiṁ sesi,",
  "pv18:1.2_0": "Ko attho supanena te;",
  "pv18:1.3_0": "Yo ca tuyhaṁ sako bhātā,",
  "pv18:1.4_0": "Hadayaṁ cakkhu ca dakkhiṇaṁ;",
  "pv18:1.5_0": "Tassa vātā balīyanti,",
  "pv18:1.6_0": "Sasaṁ jappati kesavā”ti.",
  "pv18:2.1_0": "“Tassa taṁ vacanaṁ sutvā,",
  "pv18:2.2_0": "rohiṇeyyassa kesavo;",
  "pv18:2.3_0": "Taramānarūpo vuṭṭhāsi,",
  "pv18:2.4_0": "bhātusokena aṭṭito.",
  "pv18:3.1_0": "Kiṁ nu ummattarūpova,",
  "pv18:3.2_0": "kevalaṁ dvārakaṁ imaṁ;",
  "pv18:3.3_0": "Saso sasoti lapasi,",
  "pv18:3.4_0": "kīdisaṁ sasamicchasi.",
  "pv18:4.1_0": "Sovaṇṇamayaṁ maṇimayaṁ,",
  "pv18:4.2_0": "Lohamayaṁ atha rūpiyamayaṁ;",
  "pv18:4.3_0": "Saṅkhasilāpavāḷamayaṁ,",
  "pv18:4.4_0": "Kārayissāmi te sasaṁ.",
  "pv18:5.1_0": "Santi aññepi sasakā,",
  "pv18:5.2_0": "araññavanagocarā;",
  "pv18:5.3_0": "Tepi te ānayissāmi,",
  "pv18:5.4_0": "kīdisaṁ sasamicchasī”ti.",
  "pv18:6.1_0": "“Nāhamete sase icche,",
  "pv18:6.2_0": "ye sasā pathavissitā;",
  "pv18:6.3_0": "Candato sasamicchāmi,",
  "pv18:6.4_0": "taṁ me ohara kesavā”ti.",
  "pv18:7.1_0": "“So nūna madhuraṁ ñāti,",
  "pv18:7.2_0": "jīvitaṁ vijahissasi;",
  "pv18:7.3_0": "Apatthiyaṁ patthayasi,",
  "pv18:7.4_0": "candato sasamicchasī”ti.",
  "pv18:8.1_0": "“Evañce kaṇha jānāsi,",
  "pv18:8.2_0": "yathaññamanusāsasi;",
  "pv18:8.3_0": "Kasmā pure mataṁ puttaṁ,",
  "pv18:8.4_0": "ajjāpi manusocasi.",
  "pv18:9.1_0": "Na yaṁ labbhā manussena,",
  "pv18:9.2_0": "amanussena vā pana;",
  "pv18:9.3_0": "Jāto me mā mari putto,",
  "pv18:9.4_0": "kuto labbhā alabbhiyaṁ.",
  "pv18:10.1_0": "Na mantā mūlabhesajjā,",
  "pv18:10.2_0": "osadhehi dhanena vā;",
  "pv18:10.3_0": "Sakkā ānayituṁ kaṇha,",
  "pv18:10.4_0": "yaṁ petamanusocasi.",
  "pv18:11.1_0": "Mahaddhanā mahābhogā,",
  "pv18:11.2_0": "raṭṭhavantopi khattiyā;",
  "pv18:11.3_0": "Pahūtadhanadhaññāse,",
  "pv18:11.4_0": "tepi no ajarāmarā.",
  "pv18:12.1_0": "Khattiyā brāhmaṇā vessā,",
  "pv18:12.2_0": "suddā caṇḍālapukkusā;",
  "pv18:12.3_0": "Ete caññe ca jātiyā,",
  "pv18:12.4_0": "tepi no ajarāmarā.",
  "pv18:13.1_0": "Ye mantaṁ parivattenti,",
  "pv18:13.2_0": "chaḷaṅgaṁ brahmacintitaṁ;",
  "pv18:13.3_0": "Ete caññe ca vijjāya,",
  "pv18:13.4_0": "tepi no ajarāmarā.",
  "pv18:14.1_0": "Isayo vāpi ye santā,",
  "pv18:14.2_0": "saññatattā tapassino;",
  "pv18:14.3_0": "Sarīraṁ tepi kālena,",
  "pv18:14.4_0": "vijahanti tapassino.",
  "pv18:15.1_0": "Bhāvitattā arahanto,",
  "pv18:15.2_0": "katakiccā anāsavā;",
  "pv18:15.3_0": "Nikkhipanti imaṁ dehaṁ,",
  "pv18:15.4_0": "puññapāpaparikkhayā”ti.",
  "pv18:16.1_0": "“Ādittaṁ vata maṁ santaṁ,",
  "pv18:16.2_0": "ghatasittaṁva pāvakaṁ;",
  "pv18:16.3_0": "Vārinā viya osiñcaṁ,",
  "pv18:16.4_0": "sabbaṁ nibbāpaye daraṁ.",
  "pv18:17.1_0": "Abbahī vata me sallaṁ,",
  "pv18:17.2_0": "sokaṁ hadayanissitaṁ;",
  "pv18:17.3_0": "Yo me sokaparetassa,",
  "pv18:17.4_0": "puttasokaṁ apānudi.",
  "pv18:18.1_0": "Svāhaṁ abbūḷhasallosmi,",
  "pv18:18.2_0": "sītibhūtosmi nibbuto;",
  "pv18:18.3_0": "Na socāmi na rodāmi,",
  "pv18:18.4_0": "tava sutvāna bhātika”.",
  "pv18:19.1_0": "Evaṁ karonti sappaññā,",
  "pv18:19.2_0": "ye honti anukampakā;",
  "pv18:19.3_0": "Nivattayanti sokamhā,",
  "pv18:19.4_0": "ghaṭo jeṭṭhaṁva bhātaraṁ.",
  "pv18:20.1_0": "Yassa etādisā honti,",
  "pv18:20.2_0": "amaccā paricārakā;",
  "pv18:20.3_0": "Subhāsitena anventi,",
  "pv18:20.4_0": "ghaṭo jeṭṭhaṁva bhātaranti.",
  "pv18:21.1_0": "Kaṇhapetavatthu chaṭṭhaṁ."
}