{
  "ja539:0.1_0": "Jātaka",
  "ja539:0.2_0": "Mahānipāta",
  "ja539:0.3_0": "Mūgapakkhavagga",
  "ja539:0.4_0": "2. Mahājanakajātaka",
  "ja539:1.1_0": "“Koyaṁ majjhe samuddasmiṁ,",
  "ja539:1.2_0": "apassaṁ tīramāyuhe;",
  "ja539:1.3_0": "Kaṁ tvaṁ atthavasaṁ ñatvā,",
  "ja539:1.4_0": "evaṁ vāyamase bhusaṁ”.",
  "ja539:2.1_0": "“Nisamma vattaṁ lokassa,",
  "ja539:2.2_0": "vāyāmassa ca devate;",
  "ja539:2.3_0": "Tasmā majjhe samuddasmiṁ,",
  "ja539:2.4_0": "apassaṁ tīramāyuhe”.",
  "ja539:3.1_0": "“Gambhīre appameyyasmiṁ,",
  "ja539:3.2_0": "tīraṁ yassa na dissati;",
  "ja539:3.3_0": "Mogho te purisavāyāmo,",
  "ja539:3.4_0": "appatvāva marissasi”.",
  "ja539:4.1_0": "“Anaṇo ñātinaṁ hoti,",
  "ja539:4.2_0": "devānaṁ pitunañca so;",
  "ja539:4.3_0": "Karaṁ purisakiccāni,",
  "ja539:4.4_0": "na ca pacchānutappati”.",
  "ja539:5.1_0": "“Apāraneyyaṁ yaṁ kammaṁ,",
  "ja539:5.2_0": "Aphalaṁ kilamathuddayaṁ;",
  "ja539:5.3_0": "Tattha ko vāyamenattho,",
  "ja539:5.4_0": "Maccu yassābhinippataṁ”.",
  "ja539:6.1_0": "“Apāraneyyamaccantaṁ,",
  "ja539:6.2_0": "yo viditvāna devate;",
  "ja539:6.3_0": "Na rakkhe attano pāṇaṁ,",
  "ja539:6.4_0": "jaññā so yadi hāpaye.",
  "ja539:7.1_0": "Adhippāyaphalaṁ eke,",
  "ja539:7.2_0": "asmiṁ lokasmi devate;",
  "ja539:7.3_0": "Payojayanti kammāni,",
  "ja539:7.4_0": "tāni ijjhanti vā na vā.",
  "ja539:8.1_0": "Sandiṭṭhikaṁ kammaphalaṁ,",
  "ja539:8.2_0": "nanu passasi devate;",
  "ja539:8.3_0": "Sannā aññe tarāmahaṁ,",
  "ja539:8.4_0": "tañca passāmi santike.",
  "ja539:9.1_0": "So ahaṁ vāyamissāmi,",
  "ja539:9.2_0": "yathāsatti yathābalaṁ;",
  "ja539:9.3_0": "Gacchaṁ pāraṁ samuddassa,",
  "ja539:9.4_0": "kassaṁ purisakāriyaṁ”.",
  "ja539:10.1_0": "“Yo tvaṁ evaṁ gate oghe,",
  "ja539:10.2_0": "appameyye mahaṇṇave;",
  "ja539:10.3_0": "Dhammavāyāmasampanno,",
  "ja539:10.4_0": "kammunā nāvasīdasi;",
  "ja539:10.5_0": "So tvaṁ tattheva gacchāhi,",
  "ja539:10.6_0": "yattha te nirato mano.",
  "ja539:11.1_0": "Suriyuggamane nidhi,",
  "ja539:11.2_0": "atho oggamane nidhi;",
  "ja539:11.3_0": "Anto nidhi bahi nidhi,",
  "ja539:11.4_0": "na anto na bahi nidhi.",
  "ja539:12.1_0": "Ārohane mahānidhi,",
  "ja539:12.2_0": "atho orohane nidhi;",
  "ja539:12.3_0": "Catūsu mahāsālesu,",
  "ja539:12.4_0": "samantā yojane nidhi.",
  "ja539:13.1_0": "Dantaggesu mahānidhi,",
  "ja539:13.2_0": "bālaggesu ca kepuke;",
  "ja539:13.3_0": "Rukkhaggesu mahānidhi,",
  "ja539:13.4_0": "soḷasete mahānidhī;",
  "ja539:13.5_0": "Sahassathāmo pallaṅko,",
  "ja539:13.6_0": "sīvalārādhanena ca.",
  "ja539:14.1_0": "Āsīsetheva puriso,",
  "ja539:14.2_0": "na nibbindeyya paṇḍito;",
  "ja539:14.3_0": "Passāmi vohaṁ attānaṁ,",
  "ja539:14.4_0": "yathā icchiṁ tathā ahu.",
  "ja539:15.1_0": "Āsīsetheva puriso,",
  "ja539:15.2_0": "na nibbindeyya paṇḍito;",
  "ja539:15.3_0": "Passāmi vohaṁ attānaṁ,",
  "ja539:15.4_0": "udakā thalamubbhataṁ.",
  "ja539:16.1_0": "Vāyametheva puriso,",
  "ja539:16.2_0": "na nibbindeyya paṇḍito;",
  "ja539:16.3_0": "Passāmi vohaṁ attānaṁ,",
  "ja539:16.4_0": "yathā icchiṁ tathā ahu.",
  "ja539:17.1_0": "Vāyametheva puriso,",
  "ja539:17.2_0": "na nibbindeyya paṇḍito;",
  "ja539:17.3_0": "Passāmi vohaṁ attānaṁ,",
  "ja539:17.4_0": "udakā thalamubbhataṁ.",
  "ja539:18.1_0": "Dukkhūpanītopi naro sapañño,",
  "ja539:18.2_0": "Āsaṁ na chindeyya sukhāgamāya;",
  "ja539:18.3_0": "Bahū hi phassā ahitā hitā ca,",
  "ja539:18.4_0": "Avitakkitā maccumupabbajanti.",
  "ja539:19.1_0": "Acintitampi bhavati,",
  "ja539:19.2_0": "cintitampi vinassati;",
  "ja539:19.3_0": "Na hi cintāmayā bhogā,",
  "ja539:19.4_0": "itthiyā purisassa vā”.",
  "ja539:20.1_0": "“Aporāṇaṁ vata bho rājā,",
  "ja539:20.2_0": "sabbabhummo disampati;",
  "ja539:20.3_0": "Nājja nacce nisāmeti,",
  "ja539:20.4_0": "na gīte kurute mano.",
  "ja539:21.1_0": "Na mige napi uyyāne,",
  "ja539:21.2_0": "napi haṁse udikkhati;",
  "ja539:21.3_0": "Mūgova tuṇhimāsīno,",
  "ja539:21.4_0": "na atthamanusāsati”.",
  "ja539:22.1_0": "“Sukhakāmā rahosīlā,",
  "ja539:22.2_0": "vadhabandhā upāratā;",
  "ja539:22.3_0": "Kassa nu ajja ārāme,",
  "ja539:22.4_0": "daharā vuddhā ca acchare.",
  "ja539:23.1_0": "Atikkantavanathā dhīrā,",
  "ja539:23.2_0": "namo tesaṁ mahesinaṁ;",
  "ja539:23.3_0": "Ye ussukamhi lokamhi,",
  "ja539:23.4_0": "viharanti manussukā.",
  "ja539:24.1_0": "Te chetvā maccuno jālaṁ,",
  "ja539:24.2_0": "tataṁ māyāvino daḷaṁ;",
  "ja539:24.3_0": "Chinnālayattā gacchanti,",
  "ja539:24.4_0": "ko tesaṁ gatimāpaye.",
  "ja539:25.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:25.2_0": "vibhattaṁ bhāgaso mitaṁ;",
  "ja539:25.3_0": "Pahāya pabbajissāmi,",
  "ja539:25.4_0": "taṁ kudāssu bhavissati.",
  "ja539:26.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:26.2_0": "visālaṁ sabbatopabhaṁ;",
  "ja539:26.3_0": "Pahāya pabbajissāmi,",
  "ja539:26.4_0": "taṁ kudāssu bhavissati.",
  "ja539:27.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:27.2_0": "bahupākāratoraṇaṁ;",
  "ja539:27.3_0": "Pahāya pabbajissāmi,",
  "ja539:27.4_0": "taṁ kudāssu bhavissati.",
  "ja539:28.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:28.2_0": "daḷhamaṭṭālakoṭṭhakaṁ;",
  "ja539:28.3_0": "Pahāya pabbajissāmi,",
  "ja539:28.4_0": "taṁ kudāssu bhavissati.",
  "ja539:29.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:29.2_0": "suvibhattaṁ mahāpathaṁ;",
  "ja539:29.3_0": "Pahāya pabbajissāmi,",
  "ja539:29.4_0": "taṁ kudāssu bhavissati.",
  "ja539:30.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:30.2_0": "suvibhattantarāpaṇaṁ;",
  "ja539:30.3_0": "Pahāya pabbajissāmi,",
  "ja539:30.4_0": "taṁ kudāssu bhavissati.",
  "ja539:31.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:31.2_0": "gavassarathapīḷitaṁ;",
  "ja539:31.3_0": "Pahāya pabbajissāmi,",
  "ja539:31.4_0": "taṁ kudāssu bhavissati.",
  "ja539:32.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:32.2_0": "ārāmavanamāliniṁ;",
  "ja539:32.3_0": "Pahāya pabbajissāmi,",
  "ja539:32.4_0": "taṁ kudāssu bhavissati.",
  "ja539:33.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:33.2_0": "uyyānavanamāliniṁ;",
  "ja539:33.3_0": "Pahāya pabbajissāmi,",
  "ja539:33.4_0": "taṁ kudāssu bhavissati.",
  "ja539:34.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:34.2_0": "pāsādavanamāliniṁ;",
  "ja539:34.3_0": "Pahāya pabbajissāmi,",
  "ja539:34.4_0": "taṁ kudāssu bhavissati.",
  "ja539:35.1_0": "Kadāhaṁ mithilaṁ phītaṁ,",
  "ja539:35.2_0": "tipuraṁ rājabandhuniṁ;",
  "ja539:35.3_0": "Māpitaṁ somanassena,",
  "ja539:35.4_0": "vedehena yasassinā;",
  "ja539:35.5_0": "Pahāya pabbajissāmi,",
  "ja539:35.6_0": "taṁ kudāssu bhavissati.",
  "ja539:36.1_0": "Kadāhaṁ vedehe phīte,",
  "ja539:36.2_0": "nicite dhammarakkhite;",
  "ja539:36.3_0": "Pahāya pabbajissāmi,",
  "ja539:36.4_0": "taṁ kudāssu bhavissati.",
  "ja539:37.1_0": "Kadāhaṁ vedehe phīte,",
  "ja539:37.2_0": "ajeyye dhammarakkhite;",
  "ja539:37.3_0": "Pahāya pabbajissāmi,",
  "ja539:37.4_0": "taṁ kudāssu bhavissati.",
  "ja539:38.1_0": "Kadāhaṁ antepuraṁ rammaṁ,",
  "ja539:38.2_0": "Vibhattaṁ bhāgaso mitaṁ;",
  "ja539:38.3_0": "Pahāya pabbajissāmi,",
  "ja539:38.4_0": "Taṁ kudāssu bhavissati.",
  "ja539:39.1_0": "Kadāhaṁ antepuraṁ rammaṁ,",
  "ja539:39.2_0": "sudhāmattikalepanaṁ;",
  "ja539:39.3_0": "Pahāya pabbajissāmi,",
  "ja539:39.4_0": "taṁ kudāssu bhavissati.",
  "ja539:40.1_0": "Kadāhaṁ antepuraṁ rammaṁ,",
  "ja539:40.2_0": "sucigandhaṁ manoramaṁ;",
  "ja539:40.3_0": "Pahāya pabbajissāmi,",
  "ja539:40.4_0": "taṁ kudāssu bhavissati.",
  "ja539:41.1_0": "Kadāhaṁ kūṭāgāre ca,",
  "ja539:41.2_0": "vibhatte bhāgaso mite;",
  "ja539:41.3_0": "Pahāya pabbajissāmi,",
  "ja539:41.4_0": "taṁ kudāssu bhavissati.",
  "ja539:42.1_0": "Kadāhaṁ kūṭāgāre ca,",
  "ja539:42.2_0": "sudhāmattikalepane;",
  "ja539:42.3_0": "Pahāya pabbajissāmi,",
  "ja539:42.4_0": "taṁ kudāssu bhavissati.",
  "ja539:43.1_0": "Kadāhaṁ kūṭāgāre ca,",
  "ja539:43.2_0": "sucigandhe manorame;",
  "ja539:43.3_0": "Pahāya pabbajissāmi,",
  "ja539:43.4_0": "taṁ kudāssu bhavissati.",
  "ja539:44.1_0": "Kadāhaṁ kūṭāgāre ca,",
  "ja539:44.2_0": "litte candanaphosite;",
  "ja539:44.3_0": "Pahāya pabbajissāmi,",
  "ja539:44.4_0": "taṁ kudāssu bhavissati.",
  "ja539:45.1_0": "Kadāhaṁ soṇṇapallaṅke,",
  "ja539:45.2_0": "gonake cittasanthate;",
  "ja539:45.3_0": "Pahāya pabbajissāmi,",
  "ja539:45.4_0": "taṁ kudāssu bhavissati.",
  "ja539:46.1_0": "Kadāhaṁ maṇipallaṅke,",
  "ja539:46.2_0": "gonake cittasanthate;",
  "ja539:46.3_0": "Pahāya pabbajissāmi,",
  "ja539:46.4_0": "taṁ kudāssu bhavissati.",
  "ja539:47.1_0": "Kadāhaṁ kappāsakoseyyaṁ,",
  "ja539:47.2_0": "khomakoṭumbarāni ca;",
  "ja539:47.3_0": "Pahāya pabbajissāmi,",
  "ja539:47.4_0": "taṁ kudāssu bhavissati.",
  "ja539:48.1_0": "Kadāhaṁ pokkharaṇī rammā,",
  "ja539:48.2_0": "cakkavākapakūjitā;",
  "ja539:48.3_0": "Mandālakehi sañchannā,",
  "ja539:48.4_0": "padumuppalakehi ca;",
  "ja539:48.5_0": "Pahāya pabbajissāmi,",
  "ja539:48.6_0": "taṁ kudāssu bhavissati.",
  "ja539:49.1_0": "Kadāhaṁ hatthigumbe ca,",
  "ja539:49.2_0": "sabbālaṅkārabhūsite;",
  "ja539:49.3_0": "Suvaṇṇakacche mātaṅge,",
  "ja539:49.4_0": "hemakappanavāsase.",
  "ja539:50.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:50.2_0": "tomaraṅkusapāṇibhi;",
  "ja539:50.3_0": "Pahāya pabbajissāmi,",
  "ja539:50.4_0": "taṁ kudāssu bhavissati.",
  "ja539:51.1_0": "Kadāhaṁ assagumbe ca,",
  "ja539:51.2_0": "sabbālaṅkārabhūsite;",
  "ja539:51.3_0": "Ājānīyeva jātiyā,",
  "ja539:51.4_0": "sindhave sīghavāhane.",
  "ja539:52.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:52.2_0": "illiyācāpadhāribhi;",
  "ja539:52.3_0": "Pahāya pabbajissāmi,",
  "ja539:52.4_0": "taṁ kudāssu bhavissati.",
  "ja539:53.1_0": "Kadāhaṁ rathaseniyo,",
  "ja539:53.2_0": "sannaddhe ussitaddhaje;",
  "ja539:53.3_0": "Dīpe athopi veyyagghe,",
  "ja539:53.4_0": "sabbālaṅkārabhūsite.",
  "ja539:54.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:54.2_0": "cāpahatthehi vammibhi;",
  "ja539:54.3_0": "Pahāya pabbajissāmi,",
  "ja539:54.4_0": "taṁ kudāssu bhavissati.",
  "ja539:55.1_0": "Kadāhaṁ sovaṇṇarathe,",
  "ja539:55.2_0": "sannaddhe ussitaddhaje;",
  "ja539:55.3_0": "Dīpe athopi veyyagghe,",
  "ja539:55.4_0": "sabbālaṅkārabhūsite.",
  "ja539:56.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:56.2_0": "cāpahatthehi vammibhi;",
  "ja539:56.3_0": "Pahāya pabbajissāmi,",
  "ja539:56.4_0": "taṁ kudāssu bhavissati.",
  "ja539:57.1_0": "Kadāhaṁ sajjhurathe ca,",
  "ja539:57.2_0": "sannaddhe ussitaddhaje;",
  "ja539:57.3_0": "Dīpe athopi veyyagghe,",
  "ja539:57.4_0": "sabbālaṅkārabhūsite.",
  "ja539:58.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:58.2_0": "cāpahatthehi vammibhi;",
  "ja539:58.3_0": "Pahāya pabbajissāmi,",
  "ja539:58.4_0": "taṁ kudāssu bhavissati.",
  "ja539:59.1_0": "Kadāhaṁ assarathe ca,",
  "ja539:59.2_0": "sannaddhe ussitaddhaje;",
  "ja539:59.3_0": "Dīpe athopi veyyagghe,",
  "ja539:59.4_0": "sabbālaṅkārabhūsite.",
  "ja539:60.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:60.2_0": "cāpahatthehi vammibhi;",
  "ja539:60.3_0": "Pahāya pabbajissāmi,",
  "ja539:60.4_0": "taṁ kudāssu bhavissati.",
  "ja539:61.1_0": "Kadāhaṁ oṭṭharathe ca,",
  "ja539:61.2_0": "sannaddhe ussitaddhaje;",
  "ja539:61.3_0": "Dīpe athopi veyyagghe,",
  "ja539:61.4_0": "sabbālaṅkārabhūsite.",
  "ja539:62.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:62.2_0": "cāpahatthehi vammibhi;",
  "ja539:62.3_0": "Pahāya pabbajissāmi,",
  "ja539:62.4_0": "taṁ kudāssu bhavissati.",
  "ja539:63.1_0": "Kadāhaṁ goṇarathe ca,",
  "ja539:63.2_0": "sannaddhe ussitaddhaje;",
  "ja539:63.3_0": "Dīpe athopi veyyagghe,",
  "ja539:63.4_0": "sabbālaṅkārabhūsite.",
  "ja539:64.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:64.2_0": "cāpahatthehi vammibhi;",
  "ja539:64.3_0": "Pahāya pabbajissāmi,",
  "ja539:64.4_0": "taṁ kudāssu bhavissati.",
  "ja539:65.1_0": "Kadāhaṁ ajarathe ca,",
  "ja539:65.2_0": "sannaddhe ussitaddhaje;",
  "ja539:65.3_0": "Dīpe athopi veyyagghe,",
  "ja539:65.4_0": "sabbālaṅkārabhūsite.",
  "ja539:66.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:66.2_0": "cāpahatthehi vammibhi;",
  "ja539:66.3_0": "Pahāya pabbajissāmi,",
  "ja539:66.4_0": "taṁ kudāssu bhavissati.",
  "ja539:67.1_0": "Kadāhaṁ meṇḍarathe ca,",
  "ja539:67.2_0": "sannaddhe ussitaddhaje;",
  "ja539:67.3_0": "Dīpe athopi veyyagghe,",
  "ja539:67.4_0": "sabbālaṅkārabhūsite.",
  "ja539:68.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:68.2_0": "cāpahatthehi vammibhi;",
  "ja539:68.3_0": "Pahāya pabbajissāmi,",
  "ja539:68.4_0": "taṁ kudāssu bhavissati.",
  "ja539:69.1_0": "Kadāhaṁ migarathe ca,",
  "ja539:69.2_0": "sannaddhe ussitaddhaje;",
  "ja539:69.3_0": "Dīpe athopi veyyagghe,",
  "ja539:69.4_0": "sabbālaṅkārabhūsite.",
  "ja539:70.1_0": "Ārūḷhe gāmaṇīyehi,",
  "ja539:70.2_0": "cāpahatthehi vammibhi;",
  "ja539:70.3_0": "Pahāya pabbajissāmi,",
  "ja539:70.4_0": "taṁ kudāssu bhavissati.",
  "ja539:71.1_0": "Kadāhaṁ hatthārohe ca,",
  "ja539:71.2_0": "sabbālaṅkārabhūsite;",
  "ja539:71.3_0": "Nīlavammadhare sūre,",
  "ja539:71.4_0": "tomaraṅkusapāṇine;",
  "ja539:71.5_0": "Pahāya pabbajissāmi,",
  "ja539:71.6_0": "taṁ kudāssu bhavissati.",
  "ja539:72.1_0": "Kadāhaṁ assārohe ca,",
  "ja539:72.2_0": "sabbālaṅkārabhūsite;",
  "ja539:72.3_0": "Nīlavammadhare sūre,",
