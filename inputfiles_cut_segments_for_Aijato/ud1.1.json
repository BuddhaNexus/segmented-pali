{
  "ud1.1:0.1_0": "Udāna 1.1",
  "ud1.1:0.2_0": "Paṭhamabodhisutta",
  "ud1.1:1.1_0": "Evaṁ me sutaṁ—",
  "ud1.1:1.2_0": "ekaṁ samayaṁ bhagavā uruvelāyaṁ viharati najjā nerañjarāya tīre bodhirukkhamūle paṭhamābhisambuddho.",
  "ud1.1:1.3_0": "Tena kho pana samayena bhagavā sattāhaṁ ekapallaṅkena nisinno hoti vimuttisukhapaṭisaṁvedī.",
  "ud1.1:1.4_0": "Atha kho bhagavā tassa sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā rattiyā paṭhamaṁ yāmaṁ paṭiccasamuppādaṁ anulomaṁ sādhukaṁ manasākāsi:",
  "ud1.1:2.1_0": "“Iti imasmiṁ sati idaṁ hoti,",
  "ud1.1:2.2_0": "imassuppādā idaṁ uppajjati, yadidaṁ—",
  "ud1.1:2.3_0": "avijjāpaccayā saṅkhārā,",
  "ud1.1:2.4_0": "saṅkhārapaccayā viññāṇaṁ,",
  "ud1.1:2.5_0": "viññāṇapaccayā nāmarūpaṁ,",
  "ud1.1:2.6_0": "nāmarūpapaccayā saḷāyatanaṁ,",
  "ud1.1:2.7_0": "saḷāyatanapaccayā phasso,",
  "ud1.1:2.8_0": "phassapaccayā vedanā,",
  "ud1.1:2.9_0": "vedanāpaccayā taṇhā,",
  "ud1.1:2.10_0": "taṇhāpaccayā upādānaṁ,",
  "ud1.1:2.11_0": "upādānapaccayā bhavo,",
  "ud1.1:2.12_0": "bhavapaccayā jāti,",
  "ud1.1:2.13_0": "jātipaccayā jarāmaraṇaṁ sokaparidevadukkhadomanassupāyāsā sambhavanti.",
  "ud1.1:2.14_0": "Evametassa kevalassa dukkhakkhandhassa samudayo hotī”ti.",
  "ud1.1:3.1_0": "Atha kho bhagavā etamatthaṁ viditvā tāyaṁ velāyaṁ imaṁ udānaṁ udānesi:",
  "ud1.1:4.1_0": "“Yadā have pātubhavanti dhammā,",
  "ud1.1:4.2_0": "Ātāpino jhāyato brāhmaṇassa;",
  "ud1.1:4.3_0": "Athassa kaṅkhā vapayanti sabbā,",
  "ud1.1:4.4_0": "Yato pajānāti sahetudhamman”ti.",
  "ud1.1:4.5_0": "Paṭhamaṁ."
}