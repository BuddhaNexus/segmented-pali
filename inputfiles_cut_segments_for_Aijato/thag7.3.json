{
  "thag7.3:0.1_0": "Theragāthā",
  "thag7.3:0.2_0": "Sattakanipāta",
  "thag7.3:0.3_0": "Paṭhamavagga",
  "thag7.3:0.4_0": "7.3. Bhaddattheragāthā",
  "thag7.3:1.1_0": "“Ekaputto ahaṁ āsiṁ,",
  "thag7.3:1.2_0": "piyo mātu piyo pitu;",
  "thag7.3:1.3_0": "Bahūhi vatacariyāhi,",
  "thag7.3:1.4_0": "laddho āyācanāhi ca.",
  "thag7.3:2.1_0": "Te ca maṁ anukampāya,",
  "thag7.3:2.2_0": "atthakāmā hitesino;",
  "thag7.3:2.3_0": "Ubho pitā ca mātā ca,",
  "thag7.3:2.4_0": "buddhassa upanāmayuṁ.",
  "thag7.3:3.1_0": "‘Kicchā laddho ayaṁ putto,",
  "thag7.3:3.2_0": "sukhumālo sukhedhito;",
  "thag7.3:3.3_0": "Imaṁ dadāma te nātha,",
  "thag7.3:3.4_0": "jinassa paricārakaṁ’.",
  "thag7.3:4.1_0": "Satthā ca maṁ paṭiggayha,",
  "thag7.3:4.2_0": "ānandaṁ etadabravi;",
  "thag7.3:4.3_0": "‘Pabbājehi imaṁ khippaṁ,",
  "thag7.3:4.4_0": "hessatyājāniyo ayaṁ’.",
  "thag7.3:5.1_0": "Pabbājetvāna maṁ satthā,",
  "thag7.3:5.2_0": "vihāraṁ pāvisī jino;",
  "thag7.3:5.3_0": "Anoggatasmiṁ sūriyasmiṁ,",
  "thag7.3:5.4_0": "tato cittaṁ vimucci me.",
  "thag7.3:6.1_0": "Tato satthā nirākatvā,",
  "thag7.3:6.2_0": "paṭisallānavuṭṭhito;",
  "thag7.3:6.3_0": "‘Ehi bhaddā’ti maṁ āha,",
  "thag7.3:6.4_0": "sā me āsūpasampadā.",
  "thag7.3:7.1_0": "Jātiyā sattavassena,",
  "thag7.3:7.2_0": "laddhā me upasampadā;",
  "thag7.3:7.3_0": "Tisso vijjā anuppattā,",
  "thag7.3:7.4_0": "aho dhammasudhammatā”ti.",
  "thag7.3:7.5_0": "… Bhaddo thero …."
}