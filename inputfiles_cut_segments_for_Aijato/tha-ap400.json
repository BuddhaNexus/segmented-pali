{
  "tha-ap400:0.1_0": "Therāpadāna",
  "tha-ap400:0.2_0": "Pilindavacchavagga",
  "tha-ap400:0.3_0": "8 Saḷalamaṇḍapiyattheraapadāna",
  "tha-ap400:1.1_0": "“Nibbute kakusandhamhi,",
  "tha-ap400:1.2_0": "brāhmaṇamhi vusīmati;",
  "tha-ap400:1.3_0": "Gahetvā saḷalaṁ mālaṁ,",
  "tha-ap400:1.4_0": "maṇḍapaṁ kārayiṁ ahaṁ.",
  "tha-ap400:2.1_0": "Tāvatiṁsagato santo,",
  "tha-ap400:2.2_0": "labhāmi byamhamuttamaṁ;",
  "tha-ap400:2.3_0": "Aññe devetirocāmi,",
  "tha-ap400:2.4_0": "puññakammassidaṁ phalaṁ.",
  "tha-ap400:3.1_0": "Divā vā yadi vā rattiṁ,",
  "tha-ap400:3.2_0": "caṅkamanto ṭhito cahaṁ;",
  "tha-ap400:3.3_0": "Channo saḷalapupphehi,",
  "tha-ap400:3.4_0": "puññakammassidaṁ phalaṁ.",
  "tha-ap400:4.1_0": "Imasmiṁyeva kappamhi,",
  "tha-ap400:4.2_0": "yaṁ buddhamabhipūjayiṁ;",
  "tha-ap400:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap400:4.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap400:5.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap400:5.2_0": "…pe…",
  "tha-ap400:5.3_0": "viharāmi anāsavo.",
  "tha-ap400:6.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap400:6.2_0": "…pe…",
  "tha-ap400:6.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap400:7.1_0": "Paṭisambhidā catasso,",
  "tha-ap400:7.2_0": "…pe…",
  "tha-ap400:7.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap400:8.1_0": "Itthaṁ sudaṁ āyasmā saḷalamaṇḍapiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap400:9.1_0": "Saḷalamaṇḍapiyattherassāpadānaṁ aṭṭhamaṁ."
}