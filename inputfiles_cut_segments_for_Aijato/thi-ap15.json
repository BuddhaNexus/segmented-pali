{
  "thi-ap15:0.1_0": "Therīapadāna",
  "thi-ap15:0.2_0": "Ekūposathikavagga",
  "thi-ap15:0.3_0": "5. Pañcadīpadāyikātherīapadāna",
  "thi-ap15:1.1_0": "“Nagare haṁsavatiyā,",
  "thi-ap15:1.2_0": "cārikī āsahaṁ tadā;",
  "thi-ap15:1.3_0": "Ārāmena ca ārāmaṁ,",
  "thi-ap15:1.4_0": "carāmi kusalatthikā.",
  "thi-ap15:2.1_0": "Kāḷapakkhamhi divase,",
  "thi-ap15:2.2_0": "addasaṁ bodhimuttamaṁ;",
  "thi-ap15:2.3_0": "Tattha cittaṁ pasādetvā,",
  "thi-ap15:2.4_0": "bodhimūle nisīdahaṁ.",
  "thi-ap15:3.1_0": "Garucittaṁ upaṭṭhetvā,",
  "thi-ap15:3.2_0": "sire katvāna añjaliṁ;",
  "thi-ap15:3.3_0": "Somanassaṁ pavedetvā,",
  "thi-ap15:3.4_0": "evaṁ cintesi tāvade.",
  "thi-ap15:4.1_0": "‘Yadi buddho amitaguṇo,",
  "thi-ap15:4.2_0": "asamappaṭipuggalo;",
  "thi-ap15:4.3_0": "Dassetu pāṭihīraṁ me,",
  "thi-ap15:4.4_0": "bodhi obhāsatu ayaṁ’.",
  "thi-ap15:5.1_0": "Saha āvajjite mayhaṁ,",
  "thi-ap15:5.2_0": "bodhi pajjali tāvade;",
  "thi-ap15:5.3_0": "Sabbasoṇṇamayā āsi,",
  "thi-ap15:5.4_0": "disā sabbā virocati.",
  "thi-ap15:6.1_0": "Sattarattindivaṁ tattha,",
  "thi-ap15:6.2_0": "bodhimūle nisīdahaṁ;",
  "thi-ap15:6.3_0": "Sattame divase patte,",
  "thi-ap15:6.4_0": "dīpapūjaṁ akāsahaṁ.",
  "thi-ap15:7.1_0": "Āsanaṁ parivāretvā,",
  "thi-ap15:7.2_0": "pañca dīpāni pajjaluṁ;",
  "thi-ap15:7.3_0": "Yāva udeti sūriyo,",
  "thi-ap15:7.4_0": "dīpā me pajjaluṁ tadā.",
  "thi-ap15:8.1_0": "Tena kammena sukatena,",
  "thi-ap15:8.2_0": "cetanāpaṇidhīhi ca;",
  "thi-ap15:8.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap15:8.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap15:9.1_0": "Tattha me sukataṁ byamhaṁ,",
  "thi-ap15:9.2_0": "pañcadīpāti vuccati;",
  "thi-ap15:9.3_0": "Saṭṭhiyojanamubbedhaṁ,",
  "thi-ap15:9.4_0": "tiṁsayojanavitthataṁ.",
  "thi-ap15:10.1_0": "Asaṅkhiyāni dīpāni,",
  "thi-ap15:10.2_0": "parivāre jaliṁsu me;",
  "thi-ap15:10.3_0": "Yāvatā devabhavanaṁ,",
  "thi-ap15:10.4_0": "dīpālokena jotati.",
  "thi-ap15:11.1_0": "Parammukhā nisīditvā,",
  "thi-ap15:11.2_0": "yadi icchāmi passituṁ;",
  "thi-ap15:11.3_0": "Uddhaṁ adho ca tiriyaṁ,",
  "thi-ap15:11.4_0": "sabbaṁ passāmi cakkhunā.",
  "thi-ap15:12.1_0": "Yāvatā abhikaṅkhāmi,",
  "thi-ap15:12.2_0": "daṭṭhuṁ sugataduggate;",
  "thi-ap15:12.3_0": "Tattha āvaraṇaṁ natthi,",
  "thi-ap15:12.4_0": "rukkhesu pabbatesu vā.",
  "thi-ap15:13.1_0": "Asīti devarājūnaṁ,",
  "thi-ap15:13.2_0": "mahesittamakārayiṁ;",
  "thi-ap15:13.3_0": "Satānaṁ cakkavattīnaṁ,",
  "thi-ap15:13.4_0": "mahesittamakārayiṁ.",
  "thi-ap15:14.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "thi-ap15:14.2_0": "devattaṁ atha mānusaṁ;",
  "thi-ap15:14.3_0": "Dīpasatasahassāni,",
  "thi-ap15:14.4_0": "parivāre jalanti me.",
  "thi-ap15:15.1_0": "Devalokā cavitvāna,",
  "thi-ap15:15.2_0": "uppajjiṁ mātukucchiyaṁ;",
  "thi-ap15:15.3_0": "Mātukucchigatā santī,",
  "thi-ap15:15.4_0": "akkhi me na nimīlati.",
  "thi-ap15:16.1_0": "Dīpasatasahassāni,",
  "thi-ap15:16.2_0": "puññakammasamaṅgitā;",
  "thi-ap15:16.3_0": "Jalanti sūtikāgehe,",
  "thi-ap15:16.4_0": "pañcadīpānidaṁ phalaṁ.",
  "thi-ap15:17.1_0": "Pacchime bhave sampatte,",
  "thi-ap15:17.2_0": "mānasaṁ vinivattayiṁ;",
  "thi-ap15:17.3_0": "Ajarāmataṁ sītibhāvaṁ,",
  "thi-ap15:17.4_0": "nibbānaṁ phassayiṁ ahaṁ.",
  "thi-ap15:18.1_0": "Jātiyā sattavassāhaṁ,",
  "thi-ap15:18.2_0": "arahattamapāpuṇiṁ;",
  "thi-ap15:18.3_0": "Upasampādayī buddho,",
  "thi-ap15:18.4_0": "guṇamaññāya gotamo.",
  "thi-ap15:19.1_0": "Maṇḍape rukkhamūle vā,",
  "thi-ap15:19.2_0": "suññāgāre vasantiyā;",
  "thi-ap15:19.3_0": "Sadā pajjalate dīpaṁ,",
  "thi-ap15:19.4_0": "pañcadīpānidaṁ phalaṁ.",
  "thi-ap15:20.1_0": "Dibbacakkhuvisuddhaṁ me,",
  "thi-ap15:20.2_0": "samādhikusalā ahaṁ;",
  "thi-ap15:20.3_0": "Abhiññāpāramippattā,",
  "thi-ap15:20.4_0": "pañcadīpānidaṁ phalaṁ.",
  "thi-ap15:21.1_0": "Sabbavositavosānā,",
  "thi-ap15:21.2_0": "katakiccā anāsavā;",
  "thi-ap15:21.3_0": "Pañcadīpā mahāvīra,",
  "thi-ap15:21.4_0": "pāde vandāmi cakkhuma.",
  "thi-ap15:22.1_0": "Satasahassito kappe,",
  "thi-ap15:22.2_0": "yaṁ dīpamadadiṁ tadā;",
  "thi-ap15:22.3_0": "Duggatiṁ nābhijānāmi,",
  "thi-ap15:22.4_0": "pañcadīpānidaṁ phalaṁ.",
  "thi-ap15:23.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap15:23.2_0": "…pe…",
  "thi-ap15:23.3_0": "viharāmi anāsavā.",
  "thi-ap15:24.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap15:24.2_0": "…pe…",
  "thi-ap15:24.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap15:25.1_0": "Paṭisambhidā catasso,",
  "thi-ap15:25.2_0": "…pe…",
  "thi-ap15:25.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap15:26.1_0": "Itthaṁ sudaṁ pañcadīpadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap15:27.1_0": "Pañcadīpadāyikātheriyāpadānaṁ pañcamaṁ."
}