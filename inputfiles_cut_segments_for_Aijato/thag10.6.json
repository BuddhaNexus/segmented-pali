{
  "thag10.6:0.1_0": "Theragāthā",
  "thag10.6:0.2_0": "Dasakanipāta",
  "thag10.6:0.3_0": "Paṭhamavagga",
  "thag10.6:0.4_0": "10.6 Vaṅgantaputtaupasenattheragāthā",
  "thag10.6:1.1_0": "“Vivittaṁ appanigghosaṁ,",
  "thag10.6:1.2_0": "vāḷamiganisevitaṁ;",
  "thag10.6:1.3_0": "Seve senāsanaṁ bhikkhu,",
  "thag10.6:1.4_0": "paṭisallānakāraṇā.",
  "thag10.6:2.1_0": "Saṅkārapuñjā āhatvā,",
  "thag10.6:2.2_0": "susānā rathiyāhi ca;",
  "thag10.6:2.3_0": "Tato saṅghāṭikaṁ katvā,",
  "thag10.6:2.4_0": "lūkhaṁ dhāreyya cīvaraṁ.",
  "thag10.6:3.1_0": "Nīcaṁ manaṁ karitvāna,",
  "thag10.6:3.2_0": "sapadānaṁ kulā kulaṁ;",
  "thag10.6:3.3_0": "Piṇḍikāya care bhikkhu,",
  "thag10.6:3.4_0": "guttadvāro susaṁvuto.",
  "thag10.6:4.1_0": "Lūkhenapi vā santusse,",
  "thag10.6:4.2_0": "nāññaṁ patthe rasaṁ bahuṁ;",
  "thag10.6:4.3_0": "Rasesu anugiddhassa,",
  "thag10.6:4.4_0": "jhāne na ramatī mano.",
  "thag10.6:5.1_0": "Appiccho ceva santuṭṭho,",
  "thag10.6:5.2_0": "pavivitto vase muni;",
  "thag10.6:5.3_0": "Asaṁsaṭṭho gahaṭṭhehi,",
  "thag10.6:5.4_0": "anāgārehi cūbhayaṁ.",
  "thag10.6:6.1_0": "Yathā jaḷo va mūgo va,",
  "thag10.6:6.2_0": "attānaṁ dassaye tathā;",
  "thag10.6:6.3_0": "Nātivelaṁ sambhāseyya,",
  "thag10.6:6.4_0": "saṅghamajjhamhi paṇḍito.",
  "thag10.6:7.1_0": "Na so upavade kañci,",
  "thag10.6:7.2_0": "upaghātaṁ vivajjaye;",
  "thag10.6:7.3_0": "Saṁvuto pātimokkhasmiṁ,",
  "thag10.6:7.4_0": "mattaññū cassa bhojane.",
  "thag10.6:8.1_0": "Suggahītanimittassa,",
  "thag10.6:8.2_0": "cittassuppādakovido;",
  "thag10.6:8.3_0": "Samathaṁ anuyuñjeyya,",
  "thag10.6:8.4_0": "kālena ca vipassanaṁ.",
  "thag10.6:9.1_0": "Vīriyasātaccasampanno,",
  "thag10.6:9.2_0": "yuttayogo sadā siyā;",
  "thag10.6:9.3_0": "Na ca appatvā dukkhantaṁ,",
  "thag10.6:9.4_0": "vissāsaṁ eyya paṇḍito.",
  "thag10.6:10.1_0": "Evaṁ viharamānassa,",
  "thag10.6:10.2_0": "suddhikāmassa bhikkhuno;",
  "thag10.6:10.3_0": "Khīyanti āsavā sabbe,",
  "thag10.6:10.4_0": "nibbutiñcādhigacchatī”ti.",
  "thag10.6:10.5_0": "… Upaseno vaṅgantaputto thero …."
}