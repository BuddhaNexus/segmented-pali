{
  "anya-e0605n29:0_0": "Patthanādīpanīgāthā",
  "anya-e0605n29:1_0": "242.",
  "anya-e0605n29:2_0": " Asmiṁ ca pubbepi ca attabhāve,",
  "anya-e0605n29:3_0": "Sabbehi puññehi mayā katehi;",
  "anya-e0605n29:4_0": "Pūjāvidhānehi ca saññamehi,",
  "anya-e0605n29:5_0": "Bhave bhave pemaniyo bhaveyyaṁ.",
  "anya-e0605n29:6_0": "243.",
  "anya-e0605n29:7_0": " Saddhā hirottappabahussutattaṁ,",
  "anya-e0605n29:8_0": "Parakkamo ceva satissamādhi;",
  "anya-e0605n29:9_0": "Nibbedhabhāgī vajirūpamāti,",
  "anya-e0605n29:10_0": "Paññā ca me sijjhatu yāva bodhiṁ.",
  "anya-e0605n29:11_0": "244.",
  "anya-e0605n29:12_0": " Rāgañca dosañca pahāya mohaṁ,",
  "anya-e0605n29:13_0": "Diṭṭhiñca mānaṁ vicikicchitañca;",
  "anya-e0605n29:14_0": "Macchereissāmalavippahīno,",
  "anya-e0605n29:15_0": "Anuddhato accapalo bhaveyyaṁ.",
  "anya-e0605n29:16_0": "245.",
  "anya-e0605n29:17_0": " Bhaveyyahaṁ kenaci nappaseyho,",
  "anya-e0605n29:18_0": "Bhogo ca dinnehi paṭehi;",
  "anya-e0605n29:19_0": "Bhogo ca kāyo ca mamesa laddho,",
  "anya-e0605n29:20_0": "Parūpakārāya bhaveyyaṁ nūna.",
  "anya-e0605n29:21_0": "246.",
  "anya-e0605n29:22_0": " Dhammenā mālāpitaro bhareyyaṁ,",
  "anya-e0605n29:23_0": "Vuḍḍhapacāyī ca bahūpakārī;",
  "anya-e0605n29:24_0": "Ñātīsu mittesu sapattakesu,",
  "anya-e0605n29:25_0": "Vuḍḍhiṁ kareyyaṁ hitamattano ca.",
  "anya-e0605n29:26_0": "247.",
  "anya-e0605n29:27_0": " Metteyyanāthaṁ upasaṅkamitvā,",
  "anya-e0605n29:28_0": "Tassattabhāvaṁ abhipūjayitvā;",
  "anya-e0605n29:29_0": "Laddhāna veyyākaraṇaṁ anūnaṁ,",
  "anya-e0605n29:30_0": "Buddho ayaṁ hessatināgatesu.",
  "anya-e0605n29:31_0": "248.",
  "anya-e0605n29:32_0": " Lokena kenāpi anupalitto,",
  "anya-e0605n29:33_0": "Dāne rato sīlaguṇe susāṇṭhito;",
  "anya-e0605n29:34_0": "Nekkhammabhāgi varañāṇalābhī,",
  "anya-e0605n29:35_0": "Bhaveyyahaṁ thāmabalupapanno.",
  "anya-e0605n29:36_0": "249.",
  "anya-e0605n29:37_0": " Sīsaṁ samaṁsamaṁ mama hatthapāde,",
  "anya-e0605n29:38_0": "Saṁchinadamānepi kareyyakhantiṁ;",
  "anya-e0605n29:39_0": "Sacce ṭhito kālumadhiṭṭhite va,",
  "anya-e0605n29:40_0": "Mettāyupekkhāya yuto bhaveyyaṁ.",
  "anya-e0605n29:41_0": "250.",
  "anya-e0605n29:42_0": " Mahāpariccāgaṁ katvā pañca,",
  "anya-e0605n29:43_0": "Sambodhimaggaṁ avirādhayanto;",
  "anya-e0605n29:44_0": "Chetvā kilese citapañcamāro,",
  "anya-e0605n29:45_0": "Buddho bhavissāmi anāgatesu."
}