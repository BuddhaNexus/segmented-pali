{
  "anya-e0606n:0_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0606n:1_0": "Kamalāñjali",
  "anya-e0606n:2_0": "1.",
  "anya-e0606n:3_0": "Kamalāsana kamalāpati pamathādhipa vajirā,",
  "anya-e0606n:4_0": "Yudhadānava manujoraga bhujagāsana patinaṁ;",
  "anya-e0606n:5_0": "Makuṭāhita manidīdhiti bhamarāvali bhajitaṁ,",
  "anya-e0606n:6_0": "Paṇamā’mahaṁ anaghaṁ muni caraṇāmala kamalaṁ.",
  "anya-e0606n:7_0": "2.",
  "anya-e0606n:8_0": "Kamalālaya sadi’saṅkita kalamaṅgala ruciraṁ,",
  "anya-e0606n:9_0": "Jutirañjitaṁ abhinijjita subhakañcana nalinaṁ;",
  "anya-e0606n:10_0": "Janitā cira samaye nija pitu bhūpati namitaṁ,",
  "anya-e0606n:11_0": "Paṇamā’mahaṁ anaghaṁ muni caraṇāmala kamalaṁ.",
  "anya-e0606n:12_0": "3.",
  "anya-e0606n:13_0": "Saraṇāgata rajanīpati dinasekhara namitaṁ,",
  "anya-e0606n:14_0": "Bhajitākhila janapāvanaṁ abhikaṅkhita sukhadaṁ;",
  "anya-e0606n:15_0": "Vasudhātala sayamuggata sarasīruha mahitaṁ,",
  "anya-e0606n:16_0": "Paṇamā’mahaṁ anaghaṁ muni caraṇāmala kamalaṁ.",
  "anya-e0606n:17_0": "4.",
  "anya-e0606n:18_0": "Diradāsana tarupantika ghaṭitāsanaṁ abhayaṁ,",
  "anya-e0606n:19_0": "Vijayāsana samadhiṭṭhita caturaṅgika viriyaṁ;",
  "anya-e0606n:20_0": "Dharamānaka suriyehani vijitantaka dhajiniṁ,",
  "anya-e0606n:21_0": "Paṇamā’mahaṁ abhipātita namuciddhaja vibhavaṁ.",
  "anya-e0606n:22_0": "5.",
  "anya-e0606n:23_0": "Sadayodita piyabhārati vijitantaka samaraṁ,",
  "anya-e0606n:24_0": "Dasapārami balakampita sadharādhara dharaniṁ;",
  "anya-e0606n:25_0": "Girimekhala varavārana sirasānata caraṇaṁ,",
  "anya-e0606n:26_0": "Paṇamā’mahaṁ abhinandita sanarāmara bhuvanaṁ.",
  "anya-e0606n:27_0": "6.",
  "anya-e0606n:28_0": "Nikhilāsava vigame’nativimalīkata hadayaṁ,",
  "anya-e0606n:29_0": "Tadanantara viditākhila matigocara visayaṁ;",
  "anya-e0606n:30_0": "Visayīkata bhuvanattayaṁ atilokiya caritaṁ,",
  "anya-e0606n:31_0": "Paṇamā’mahaṁ aparājitaṁ arahaṁ muniṁ asamaṁ.",
  "anya-e0606n:32_0": "7.",
  "anya-e0606n:33_0": "Mudubhārati madhupāsita nalinopama vadanaṁ,",
  "anya-e0606n:34_0": "Rucirāyata nalinīdala nibha locana yugalaṁ;",
  "anya-e0606n:35_0": "Udayodita ravimaṇḍala jalitāmala niṭilaṁ,",
  "anya-e0606n:36_0": "Paṇamā’maha akutobhayaṁ anaghaṁ muni pamukhaṁ.",
  "anya-e0606n:37_0": "8.",
  "anya-e0606n:38_0": "Asitambuda rucikuñcita mudu kuntala lalitaṁ,",
  "anya-e0606n:39_0": "Bhuvanodara vitatāmita jutisañcaya jalitaṁ;",
  "anya-e0606n:40_0": "Madamodita diradopama gativibbhama ruciraṁ,",
  "anya-e0606n:41_0": "Paṇamā’mahaṁ amatandada munipuṅgavaṁ asamaṁ.",
  "anya-e0606n:42_0": "9.",
  "anya-e0606n:43_0": "Karuṇārasa paribhāvita savaṇāmata vacanaṁ,",
  "anya-e0606n:44_0": "Virudāvali sataghosita yasapūrita bhuvanaṁ;",
  "anya-e0606n:45_0": "Sumanohara varalakkhaṇa sirisañcaya sadanaṁ,",
  "anya-e0606n:46_0": "Paṇamā’mahaṁ uditāmala sasimaṇḍala vadanaṁ.",
  "anya-e0606n:47_0": "10.",
  "anya-e0606n:48_0": "Vinayāraha janamānasa kumudākara sasinaṁ,",
  "anya-e0606n:49_0": "Tasināpaga parisosana satadīdhiti tulitaṁ;",
  "anya-e0606n:50_0": "Tamanāsava munisevitaṁ apalokita sukhadaṁ,",
  "anya-e0606n:51_0": "Paṇamā’mahaṁ aniketanaṁ akhilāgati vigataṁ.",
  "anya-e0606n:52_0": "11.",
  "anya-e0606n:53_0": "Sahitākhila bhayabheravaṁ abhayāgata saranaṁ,",
  "anya-e0606n:54_0": "Ajarāmara sukhadāyakaṁ anirākata karuṇaṁ;",
  "anya-e0606n:55_0": "Tamupāsaka janasevita supatiṭṭhita caraṇaṁ,",
  "anya-e0606n:56_0": "Paṇamā’mahaṁ ahitāpahaṁ anaghuttama caraṇaṁ.",
  "anya-e0606n:57_0": "12.",
  "anya-e0606n:58_0": "Karuṇāmata rasapurita vīmalākhila hadayaṁ,",
  "anya-e0606n:59_0": "Vihitāmita janatāhitaṁ anukampita bhuvanaṁ;",
  "anya-e0606n:60_0": "Bhuvane sutaṁ avanīpati sata sevita caraṇaṁ,",
  "anya-e0606n:61_0": "Paṇamā’mahaṁ anaghaṁ muniṁ aghanāsana caturaṁ.",
  "anya-e0606n:62_0": "13.",
  "anya-e0606n:63_0": "Aratīrati paripīlita yatimānasa damanaṁ,",
  "anya-e0606n:64_0": "Nijasāsana vinivārita puthutitthiya samaṇaṁ;",
  "anya-e0606n:65_0": "Paravādika janatākata paribhāsita khamanaṁ,",
  "anya-e0606n:66_0": "Paṇamā’mahaṁ atidevata vara gotama samaṇaṁ.",
  "anya-e0606n:67_0": "14.",
  "anya-e0606n:68_0": "Saraṇāgata bhayanāsana vajirālaya paṇibhaṁ,",
  "anya-e0606n:69_0": "Bhavasāgara patitāmita janatārana nirataṁ;",
  "anya-e0606n:70_0": "Sirasāvahaṁ amalañjali puṭapaṅkaja makulaṁ,",
  "anya-e0606n:71_0": "Paṇamā’mahaṁ akhilalāya vigataṁ muniṁ atulaṁ.",
  "anya-e0606n:72_0": "15.",
  "anya-e0606n:73_0": "Vimalīkata janamānasa vigatāsava bhagavaṁ,",
  "anya-e0606n:74_0": "Bhavapāraga vibhavāmata sukhadāyaka satataṁ;",
  "anya-e0606n:75_0": "Paramādara garugārava vinataṁ jina payataṁ,",
  "anya-e0606n:76_0": "Padapaṅkaja rajasā mama samalaṅkuru sirasaṁ.",
  "anya-e0606n:77_0": "16.",
  "anya-e0606n:78_0": "Pavanāhata dumapallavaṁ iva nārata capalaṁ,",
  "anya-e0606n:79_0": "Bhavalālasa malinīkataṁ ajitindriya nivahaṁ;",
  "anya-e0606n:80_0": "Cira sañcita duritāhataṁ anivārita timisaṁ,",
  "anya-e0606n:81_0": "Vimalīkuru karuṇābhara sutaraṁ mama hadayaṁ.",
  "anya-e0606n:82_0": "17.",
  "anya-e0606n:83_0": "Adaye dayaṁ anaye nayaṁ api yo guṇaṁ aguṇe,",
  "anya-e0606n:84_0": "Ahite hitaṁ akaro kvacida api kenaci nakataṁ;",
  "anya-e0606n:85_0": "Sadaye jina sunaye guṇasadane tayi nitaraṁ,",
  "anya-e0606n:86_0": "Suhite hitacarite’nagha ramate mama hadayaṁ.",
  "anya-e0606n:87_0": "18.",
  "anya-e0606n:88_0": "Bhavasaṅkaṭa patitenapi bhavatā cira caritaṁ,",
  "anya-e0606n:89_0": "Visame sama caraṇaṁ khalu dasapārami bharaṇaṁ;",
  "anya-e0606n:90_0": "Sarato’hani sarato nisi supinenapi satataṁ,",
  "anya-e0606n:91_0": "Ramate jina sumate tvayi sadayaṁ mama hadayaṁ.",
  "anya-e0606n:92_0": "19.",
  "anya-e0606n:93_0": "Atiduddadaṁ adadī bhavaṁ atidukkaraṁ akarī;",
  "anya-e0606n:94_0": "Atidukkhamaṁ akhamī vata karuṇānidhi’rasamo,",
  "anya-e0606n:95_0": "Iti te guṇaṁ anaghaṁ muni sarato mama hadayaṁ,",
  "anya-e0606n:96_0": "Ramate’hani ramate nisi ramate tvayi satataṁ.",
  "anya-e0606n:97_0": "20.",
  "anya-e0606n:98_0": "Atiduccaraṁ acarī bhavaṁ atiduddamaṁ adamī,",
  "anya-e0606n:99_0": "Atiduddayaṁ adayī vata sadayāpara hadayo;",
  "anya-e0606n:100_0": "Iti te guṇaṁ anaghaṁ muni sarato mama hadayaṁ,",
  "anya-e0606n:101_0": "Ramate’hani ramate nisi ramate tvayi satataṁ.",
  "anya-e0606n:102_0": "21.",
  "anya-e0606n:103_0": "Atiduggamaṁ agamī bhavaṁ atidujjayaṁ ajayī,",
  "anya-e0606n:104_0": "Atidussahaṁ asahī vata samupekkhita manaso;",
  "anya-e0606n:105_0": "Iti te guṇaṁ anaghaṁ muni sarato mama hadayaṁ,",
  "anya-e0606n:106_0": "Ramate’hani ramate nisi ramate tvayi satataṁ.",
  "anya-e0606n:107_0": "22.",
  "anya-e0606n:108_0": "Atidāruna palayānala sadisānala jalite,",
  "anya-e0606n:109_0": "Niraye vinipatito ciraṁ aghatāpita manaso;",
  "anya-e0606n:110_0": "Na sariṁ sakida api te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:111_0": "Khama gotama narasārathi tamidaṁ mama khalitaṁ.",
  "anya-e0606n:112_0": "23.",
  "anya-e0606n:113_0": "Tiriyaggata-gatiyaṁ ciraṁ anavaṭṭhita carito,",
  "anya-e0606n:114_0": "Atiniṭṭhura vadhatajjita bhayakampita hadayo;",
  "anya-e0606n:115_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:116_0": "Khama gotama purisuttama tamidaṁ mama khalitaṁ.",
  "anya-e0606n:117_0": "24.",
  "anya-e0606n:118_0": "Paridevana nirato ciraṁ atha pettiya visaye,",
  "anya-e0606n:119_0": "Sujighacchita supipāsita parisosita jaṭhare;",
  "anya-e0606n:120_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:121_0": "Khama gotama dipaduttama tamidaṁ mama khalitaṁ.",
  "anya-e0606n:122_0": "25.",
  "anya-e0606n:123_0": "Vivaso bhusaṁ aghadūsita manasāsura visaye,",
  "anya-e0606n:124_0": "Janito ghanatimire ciraṁ atidukkhita hadayo;",
  "anya-e0606n:125_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:126_0": "Khama gotama vasisattama tamidaṁ mama khalitaṁ.",
  "anya-e0606n:127_0": "26.",
  "anya-e0606n:128_0": "Manasā cira vihitaṁ saraṁ atikibbisa caritaṁ,",
  "anya-e0606n:129_0": "Samathenatha suvirājiya taṁ asaññitaṁ upago;",
  "anya-e0606n:130_0": "Na sariṁ sakida api te pita bhajituṁ pada nalinaṁ,",
  "anya-e0606n:131_0": "Khama gotama vasipuṅgava tamidaṁ mama khalitaṁ.",
  "anya-e0606n:132_0": "27.",
  "anya-e0606n:133_0": "Vijigucchiya duritaṁ nija vapusā kataṁ amitaṁ,",
  "anya-e0606n:134_0": "Tanu vajjitaṁ upago bhavaṁ iha bhāvita samatho;",
  "anya-e0606n:135_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:136_0": "Khama gotama yatikuñjara tamidaṁ mama khalitaṁ.",
  "anya-e0606n:137_0": "28.",
  "anya-e0606n:138_0": "Ratanattaya rahite bhusa bahulīkata durite,",
  "anya-e0606n:139_0": "Janito paravisaye budhajana nindiya carite;",
  "anya-e0606n:140_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:141_0": "Khama gotama karuṇānidhi tamidaṁ mama khalitaṁ.",
  "anya-e0606n:142_0": "29.",
  "anya-e0606n:143_0": "Janito yadi manujesupi vikalindriya nivaho,",
  "anya-e0606n:144_0": "Tanunā karacaraṇādihi vikate’niha dukhito;",
  "anya-e0606n:145_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:146_0": "Khama gotama matisāgara tamidaṁ mama khalitaṁ.",
  "anya-e0606n:147_0": "30.",
  "anya-e0606n:148_0": "Vidhināhita matibhāvana rahito tamapihito,",
  "anya-e0606n:149_0": "Visadesupi kusalādisu tathadassana vimukho;",
  "anya-e0606n:150_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:151_0": "Khama gotama narakesari tamidaṁ mama khalitaṁ.",
  "anya-e0606n:152_0": "31.",
  "anya-e0606n:153_0": "Sucirenapi bhuvi dullabhaṁ asamaṁ khaṇaṁ alabhaṁ,",
  "anya-e0606n:154_0": "Sanarāmara janatāhita sukhadaṁ muni jananaṁ;",
  "anya-e0606n:155_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:156_0": "Khama gotama vadataṁvara tamidaṁ mama khalitaṁ.",
  "anya-e0606n:157_0": "32.",
  "anya-e0606n:158_0": "Nisitāyudha vadhasajjita khaḷaniddaya hadayo,",
  "anya-e0606n:159_0": "Parahiṁsana ruci bhiṁsana yamasodara sadiso;",
  "anya-e0606n:160_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:161_0": "Khama gotama munisattama tamidaṁ mama khalitaṁ.",
  "anya-e0606n:162_0": "33.",
  "anya-e0606n:163_0": "Parasantaka haraṇe katamati bañcana bahulo,",
  "anya-e0606n:164_0": "Gharasandhika paripanthika sahasākati nirato;",
  "anya-e0606n:165_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:166_0": "Khama gotama munipuṅgava tamidaṁ mama khalitaṁ.",
  "anya-e0606n:167_0": "34.",
  "anya-e0606n:168_0": "Navayobbana madagabbita parimucchita hadayo,",
  "anya-e0606n:169_0": "Sucisajjana vijigucchiya paradārika nirato;",
  "anya-e0606n:170_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:171_0": "Khama gotama karuṇābhara tamidaṁ mama khalitaṁ.",
  "anya-e0606n:172_0": "35.",
  "anya-e0606n:173_0": "Madirāsavarata nāgarajana santata bhajito,",
  "anya-e0606n:174_0": "Garugārava hiridūrita tiriyaggata carito;",
  "anya-e0606n:175_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:176_0": "Khama gotama vihatāsava tamidaṁ mama khalitaṁ.",
  "anya-e0606n:177_0": "36.",
  "anya-e0606n:178_0": "Sapitāmaha papitāmaha nicitaṁ dhanaṁ amitaṁ,",
  "anya-e0606n:179_0": "Pitusañcitamapi nāsiya kitavo hatavibhavo;",
  "anya-e0606n:180_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:181_0": "Khama gotama vijitantaka tamidaṁ mama khalitaṁ.",
  "anya-e0606n:182_0": "37.",
  "anya-e0606n:183_0": "Vitathālika vacano parapiyasuññata karaṇo,",
  "anya-e0606n:184_0": "Pharusaṁ bhaṇaṁ atinipphala bahubhāsana nipuṇo;",
  "anya-e0606n:185_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:186_0": "Khama gotama bhuvanesuta tamidaṁ mama khalitaṁ.",
  "anya-e0606n:187_0": "38.",
  "anya-e0606n:188_0": "Parasampadaṁ abhijhāyana nirantara dukhito,",
  "anya-e0606n:189_0": "Nabhirajjhana paramo kvaci phaladassana rahito;",
  "anya-e0606n:190_0": "Na sariṁ sakidapi te pita bhajituṁ padanalinaṁ,",
  "anya-e0606n:191_0": "Khama gotama guṇasāgara tamidaṁ mama khalitaṁ.",
  "anya-e0606n:192_0": "39.",
  "anya-e0606n:193_0": "Bhavato bhavaṁ aparāparaṁ ayatāciraṁ iti me,",
  "anya-e0606n:194_0": "Vapusā atha vacasāpi ca manasā kataṁ amitaṁ;",
  "anya-e0606n:195_0": "Khama gotama duritāpaha duritaṁ bahuvihitaṁ,",
  "anya-e0606n:196_0": "Dada me sivapadaṁ accutaṁ amataṁ bhavavigataṁ.",
  "anya-e0606n:197_0": "40.",
  "anya-e0606n:198_0": "Timirāvuta kuṇapākula vijigucchiya pavane,",
  "anya-e0606n:199_0": "Janikāsuci jaṭhare bahu kimisantati sadane;",
  "anya-e0606n:200_0": "Asayiṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:201_0": "Saranaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:202_0": "41.",
  "anya-e0606n:203_0": "Bahi nikkhamaṁ asakiṁ bhagatiriyaṁ patha patito,",
  "anya-e0606n:204_0": "Agadaṅkara kata sallaka satakhaṇdita karaṇo;",
  "anya-e0606n:205_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:206_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi tarane.",
  "anya-e0606n:207_0": "42.",
  "anya-e0606n:208_0": "Patito bahi ratipillaka tanurāmaya mathito,",
  "anya-e0606n:209_0": "Vadituṁ kimu viditumpi ca na sahaṁ matirahito;",
  "anya-e0606n:210_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ apphṭisaraṇe,",
  "anya-e0606n:211_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:212_0": "43.",
  "anya-e0606n:213_0": "Janito yadi sukhito janadayito piyajanako,",
  "anya-e0606n:214_0": "Puthuko bahuvidha-kīlananirato gadagahito;",
  "anya-e0606n:215_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:216_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:217_0": "44.",
  "anya-e0606n:218_0": "Tarunopi hi gharabandhana gathitomita vibhavo,",
  "anya-e0606n:219_0": "Sahasā gadagahito piyabhariyāsuta viyuto;",
  "anya-e0606n:220_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:221_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:222_0": "45.",
  "anya-e0606n:223_0": "Ajaraṁ tanuṁ abhimaññiya navayobbana vasiko,",
  "anya-e0606n:224_0": "Jarasā parimathito paraṁ ananuṭṭhita kusalo;",
  "anya-e0606n:225_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:226_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:227_0": "46.",
  "anya-e0606n:228_0": "Nirujo dhuvaṁ arujaṁ tanuṁ abhimaññiya samado,",
  "anya-e0606n:229_0": "Kusalāsaya vimukho bhusaṁ avaso gadanihato;",
  "anya-e0606n:230_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:231_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:232_0": "47.",
  "anya-e0606n:233_0": "Pavicintiya sakajīvitaṁ amaraṁ dhuvaṁ anighaṁ,",
  "anya-e0606n:234_0": "Iti jīvitamadagabbita matirujjhita kusalo;",
  "anya-e0606n:235_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:236_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:237_0": "48.",
  "anya-e0606n:238_0": "Parahiṁsana dhanamosana paradārika nirato,",
  "anya-e0606n:239_0": "Dharanīpati gahito bahu vadhabandhana nihato;",
  "anya-e0606n:240_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:241_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:242_0": "49.",
  "anya-e0606n:243_0": "Narakodaka patito giritarumatthaka galito,",
  "anya-e0606n:244_0": "Migavāḷaka gahito visadhara jātihi ḍasito;",
  "anya-e0606n:245_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:246_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:247_0": "50.",
  "anya-e0606n:248_0": "Abhicāraka vidhikopita nisicāraka gahito,",
  "anya-e0606n:249_0": "Savisodana sahasādana pabhutīhi ca khalito;",
  "anya-e0606n:250_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:251_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:252_0": "51.",
  "anya-e0606n:253_0": "Sayamevaca sajanopari kupito mativiyuto,",
  "anya-e0606n:254_0": "Savisādana galakantana pabhutāmita khalito;",
  "anya-e0606n:255_0": "Amariṁ bhavagahaṇe caraṁ ahaṁ appaṭisaraṇe,",
  "anya-e0606n:256_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:257_0": "52.",
  "anya-e0606n:258_0": "Pitupūjana niratāsaya sukhito pitudayito,",
  "anya-e0606n:259_0": "Maraṇenaca pituno bhusaṁ anusocana nirato;",
  "anya-e0606n:260_0": "Parudiṁ ciraṁ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:261_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:262_0": "53.",
  "anya-e0606n:263_0": "Samupaṭṭhiya janikaṁ nijaṁ abhivādana paramo,",
  "anya-e0606n:264_0": "Maraṇenaca janikāyanusaritā guṇamahimaṁ;",
  "anya-e0606n:265_0": "Parudiṁ ciraṁ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:266_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:267_0": "54.",
  "anya-e0606n:268_0": "Gurudevata patimānana paramo piyasuvaco,",
  "anya-e0606n:269_0": "Samupāsitacaraṇo gurumaraṇenatidukhito;",
  "anya-e0606n:270_0": "Parudiṁ ciraṁ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:271_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:272_0": "55.",
  "anya-e0606n:273_0": "Gharamedhitaṁ upagomitavibhavo ratibahulo,",
  "anya-e0606n:274_0": "Maraṇe piyabhariyāsutaduhitū’natikaruṇaṁ;",
  "anya-e0606n:275_0": "Parudiṁ ciraṁ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:276_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:277_0": "56.",
  "anya-e0606n:278_0": "Piyapubbaja sahajānuja bhagiṇidvaya maraṇe,",
  "anya-e0606n:279_0": "Nija bandhava-sakha-sissaka maraṇe pyatikaruṇaṁ;",
  "anya-e0606n:280_0": "Parudiṁ ciraṁ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:281_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:282_0": "57.",
  "anya-e0606n:283_0": "Jagatīpati gahaṇā ripujanatakkara haraṇā,",
  "anya-e0606n:284_0": "Saritodaka vahaṇā puthujalitānala dahaṇā;",
  "anya-e0606n:285_0": "Parudiṁ hatavibhavo ciramiha duggatigahaṇe,",
  "anya-e0606n:286_0": "Saraṇaṁ bhava bhagavaṁ mama bhavanīradhi taraṇe.",
  "anya-e0606n:287_0": "58.",
  "anya-e0606n:288_0": "Atiduggama visamākula bhavasaṅkaṭa patite,",
  "anya-e0606n:289_0": "Byasanaṁ ciramiti dussahaṁ anubhūyapi vimitaṁ;",
  "anya-e0606n:290_0": "Na jahe sukhalavavañcitahadayo bhavatasinaṁ,",
  "anya-e0606n:291_0": "Tamapākuru karuṇānidhi tasinaṁ mama kasiṇaṁ.",
  "anya-e0606n:292_0": "59.",
  "anya-e0606n:293_0": "Jananāvadhi maraṇaṁ viya maraṇāvadhi jananaṁ,",
  "anya-e0606n:294_0": "Ubhayenapi bhayamevahi bhavato mama niyataṁ;",
  "anya-e0606n:295_0": "Sivamevaca jananāvadhi maraṇāvadhi rahitaṁ,",
  "anya-e0606n:296_0": "Dada me sivaṁ amatandada taṁ anāsava bhagavaṁ.",
  "anya-e0606n:297_0": "60.",
  "anya-e0606n:298_0": "Ciradikkhitamapi me manaṁ anivārita tasinaṁ,",
  "anya-e0606n:299_0": "Bhavato bhava ratipīlitaṁ ahaho kalighaṭitaṁ!",
  "anya-e0606n:300_0": "Tamato pita bhayato mamamava me bhava saraṇaṁ,",
  "anya-e0606n:301_0": "Bhagavaṁ paṭisaraṇaṁ mama bhavanīradhi taraṇaṁ."
}