{
  "tha-ap426:0.1_0": "Therāpadāna",
  "tha-ap426:0.2_0": "Sakiṁsammajjakavagga",
  "tha-ap426:0.3_0": "4. Sattakadambapupphiyattheraapadāna",
  "tha-ap426:1.1_0": "“Himavantassāvidūre,",
  "tha-ap426:1.2_0": "kukkuṭo nāma pabbato;",
  "tha-ap426:1.3_0": "Tamhi pabbatapādamhi,",
  "tha-ap426:1.4_0": "satta buddhā vasiṁsu te.",
  "tha-ap426:2.1_0": "Kadambaṁ pupphitaṁ disvā,",
  "tha-ap426:2.2_0": "paggahetvāna añjaliṁ;",
  "tha-ap426:2.3_0": "Satta mālā gahetvāna,",
  "tha-ap426:2.4_0": "puññacittena okiriṁ.",
  "tha-ap426:3.1_0": "Tena kammena sukatena,",
  "tha-ap426:3.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap426:3.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap426:3.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap426:4.1_0": "Catunnavutito kappe,",
  "tha-ap426:4.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap426:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap426:4.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap426:5.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap426:5.2_0": "…pe…",
  "tha-ap426:5.3_0": "viharāmi anāsavo.",
  "tha-ap426:6.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap426:6.2_0": "…pe…",
  "tha-ap426:6.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap426:7.1_0": "Paṭisambhidā catasso,",
  "tha-ap426:7.2_0": "…pe…",
  "tha-ap426:7.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap426:8.1_0": "Itthaṁ sudaṁ āyasmā sattakadambapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap426:9.1_0": "Sattakadambapupphiyattherassāpadānaṁ catutthaṁ."
}