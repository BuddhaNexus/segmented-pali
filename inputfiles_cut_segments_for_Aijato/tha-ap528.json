{
  "tha-ap528:0.1_0": "Therāpadāna",
  "tha-ap528:0.2_0": "Tiṇadāyakavagga",
  "tha-ap528:0.3_0": "6. Daṇḍadāyakattheraapadāna",
  "tha-ap528:1.1_0": "“Kānanaṁ vanamogayha,",
  "tha-ap528:1.2_0": "veḷuṁ chetvānahaṁ tadā;",
  "tha-ap528:1.3_0": "Ālambaṇaṁ karitvāna,",
  "tha-ap528:1.4_0": "saṅghassa adadiṁ bahuṁ.",
  "tha-ap528:2.1_0": "Tena cittappasādena,",
  "tha-ap528:2.2_0": "subbate abhivādiya;",
  "tha-ap528:2.3_0": "Ālambadaṇḍaṁ datvāna,",
  "tha-ap528:2.4_0": "pakkāmiṁ uttarāmukho.",
  "tha-ap528:3.1_0": "Catunnavutito kappe,",
  "tha-ap528:3.2_0": "yaṁ daṇḍamadadiṁ tadā;",
  "tha-ap528:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap528:3.4_0": "daṇḍadānassidaṁ phalaṁ.",
  "tha-ap528:4.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap528:4.2_0": "…pe…",
  "tha-ap528:4.3_0": "viharāmi anāsavo.",
  "tha-ap528:5.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap528:5.2_0": "…pe…",
  "tha-ap528:5.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap528:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap528:6.2_0": "…pe…",
  "tha-ap528:6.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap528:7.1_0": "Itthaṁ sudaṁ āyasmā daṇḍadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap528:8.1_0": "Daṇḍadāyakattherassāpadānaṁ chaṭṭhaṁ.",
  "tha-ap528:8.2_0": "Tevīsatimaṁ bhāṇavāraṁ."
}