{
  "anya-e1010n0:0_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1010n0:1_0": "Caturārakkhadīpanī",
  "anya-e1010n0:2_0": "Kāyapaccavekkhaṇā",
  "anya-e1010n0:3_0": "1. Dussīlakathā,",
  "anya-e1010n0:4_0": "2. Sīlānisaṁsakathā,",
  "anya-e1010n0:5_0": "3. Anūsāsanakathā,",
  "anya-e1010n0:6_0": "4. Āvāsikācārakathā,",
  "anya-e1010n0:7_0": "5. Paccayanissaggakathā,",
  "anya-e1010n0:8_0": "6. Pātimokkhakathā,",
  "anya-e1010n0:9_0": "7. Dāyakovādakathā,",
  "anya-e1010n0:10_0": "Paṇāmapaṭiñā",
  "anya-e1010n0:11_0": "1.",
  "anya-e1010n0:12_0": "Cakkavāḷa nahutā ga, devāli gaṇa cumbito;",
  "anya-e1010n0:13_0": "Buddha pādambujo ṭhātu, sīse dayā tigandhajo.",
  "anya-e1010n0:14_0": "2.",
  "anya-e1010n0:15_0": "Nanta cakkavāḷa bbhugga, guṇa sanniccitaṁ jinaṁ;",
  "anya-e1010n0:16_0": "Vande tappūjitaṁ dhammaṁ, tajjaṁ saṅghañca nimmalaṁ.",
  "anya-e1010n0:17_0": "3.",
  "anya-e1010n0:18_0": "Vakkhāmi caturārakkhaṁ, sambuddha vacana nvayaṁ;",
  "anya-e1010n0:19_0": "Appamādāvahaṁ etaṁ, sottabbaṁ bhavabhīruhi.",
  "anya-e1010n0:20_0": "4.",
  "anya-e1010n0:21_0": "Buddhānussati maraṇā, bhubhā mettāca bhāvanā;",
  "anya-e1010n0:22_0": "Appamādāya ārakkhā, catasso mānitā sataṁ.",
  "anya-e1010n0:23_0": "1. Buddhānūssati bhāvanā,",
  "anya-e1010n0:24_0": "2. Maraṇassati bhāvanā,",
  "anya-e1010n0:25_0": "3. Asubha bhāvanā,",
  "anya-e1010n0:26_0": "4. Mettā bhāvanā,",
  "anya-e1010n0:27_0": "5.",
  "anya-e1010n0:28_0": "Buddhovādaṁ saritvāva, maccubbiggā sukhesino;",
  "anya-e1010n0:29_0": "Sītā sītataraṁ yanti, subhamettambusi-ṭṭhitā.",
  "anya-e1010n0:30_0": "6.",
  "anya-e1010n0:31_0": "Maraṇaggi vāraṇambu, sambuddhavacanaṁ yidaṁ;",
  "anya-e1010n0:32_0": "Bahū tadaggi santattā, sītāvāsuṁ tadambunā.",
  "anya-e1010n0:33_0": "7.",
  "anya-e1010n0:34_0": "Saddhaṁ buddhena tejetvā, mānaṁ maraṇacintayā;",
  "anya-e1010n0:35_0": "Asubhāya hane rāgaṁ, dosaṁ mettāya paññavā."
}