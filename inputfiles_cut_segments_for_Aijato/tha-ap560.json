{
  "tha-ap560:0.1_0": "Therāpadāna",
  "tha-ap560:0.2_0": "Yasavagga",
  "tha-ap560:0.3_0": "8. Bhaddajittheraapadāna",
  "tha-ap560:1.1_0": "“Ogayha yaṁ pokkharaṇiṁ,",
  "tha-ap560:1.2_0": "nānākuñjarasevitaṁ;",
  "tha-ap560:1.3_0": "Uddharāmi bhisaṁ tattha,",
  "tha-ap560:1.4_0": "ghāsahetu ahaṁ tadā.",
  "tha-ap560:2.1_0": "Bhagavā tamhi samaye,",
  "tha-ap560:2.2_0": "padumuttarasavhayo;",
  "tha-ap560:2.3_0": "Rattambaradharo buddho,",
  "tha-ap560:2.4_0": "gacchate anilañjase.",
  "tha-ap560:3.1_0": "Dhunanto paṁsukūlāni,",
  "tha-ap560:3.2_0": "saddaṁ assosahaṁ tadā;",
  "tha-ap560:3.3_0": "Uddhaṁ nijjhāyamānohaṁ,",
  "tha-ap560:3.4_0": "addasaṁ lokanāyakaṁ.",
  "tha-ap560:4.1_0": "Tattheva ṭhitako santo,",
  "tha-ap560:4.2_0": "āyāciṁ lokanāyakaṁ;",
  "tha-ap560:4.3_0": "‘Madhuṁ bhisehi sahitaṁ,",
  "tha-ap560:4.4_0": "khīraṁ sappiṁ muḷālikaṁ.",
  "tha-ap560:5.1_0": "Paṭiggaṇhātu me buddho,",
  "tha-ap560:5.2_0": "anukampāya cakkhumā’;",
  "tha-ap560:5.3_0": "Tato kāruṇiko satthā,",
  "tha-ap560:5.4_0": "orohitvā mahāyaso.",
  "tha-ap560:6.1_0": "Paṭiggaṇhi mama bhikkhaṁ,",
  "tha-ap560:6.2_0": "anukampāya cakkhumā;",
  "tha-ap560:6.3_0": "Paṭiggahetvā sambuddho,",
  "tha-ap560:6.4_0": "akā me anumodanaṁ.",
  "tha-ap560:7.1_0": "‘Sukhī hotu mahāpuñña,",
  "tha-ap560:7.2_0": "gati tuyhaṁ samijjhatu;",
  "tha-ap560:7.3_0": "Iminā bhisadānena,",
  "tha-ap560:7.4_0": "labhassu vipulaṁ sukhaṁ’.",
  "tha-ap560:8.1_0": "Idaṁ vatvāna sambuddho,",
  "tha-ap560:8.2_0": "jalajuttamanāmako;",
  "tha-ap560:8.3_0": "Bhikkhamādāya sambuddho,",
  "tha-ap560:8.4_0": "ākāsenāgamā jino.",
  "tha-ap560:9.1_0": "Tato bhisaṁ gahetvāna,",
  "tha-ap560:9.2_0": "āgacchiṁ mama assamaṁ;",
  "tha-ap560:9.3_0": "Bhisaṁ rukkhe laggetvāna,",
  "tha-ap560:9.4_0": "mama dānaṁ anussariṁ.",
  "tha-ap560:10.1_0": "Mahāvāto uṭṭhahitvā,",
  "tha-ap560:10.2_0": "sañcālesi vanaṁ tadā;",
  "tha-ap560:10.3_0": "Ākāso abhinādittha,",
  "tha-ap560:10.4_0": "asanī ca phalī tadā.",
  "tha-ap560:11.1_0": "Tato me asanīpāto,",
  "tha-ap560:11.2_0": "matthake nipatī tadā;",
  "tha-ap560:11.3_0": "Sohaṁ nisinnako santo,",
  "tha-ap560:11.4_0": "tattha kālaṅkato ahaṁ.",
  "tha-ap560:12.1_0": "Puññakammena saññutto,",
  "tha-ap560:12.2_0": "tusitaṁ upapajjahaṁ;",
  "tha-ap560:12.3_0": "Kaḷevaraṁ me patitaṁ,",
  "tha-ap560:12.4_0": "devaloke ramāmahaṁ.",
  "tha-ap560:13.1_0": "Chaḷasītisahassāni,",
  "tha-ap560:13.2_0": "nāriyo samalaṅkatā;",
  "tha-ap560:13.3_0": "Sāyaṁ pātaṁ upaṭṭhanti,",
  "tha-ap560:13.4_0": "bhisadānassidaṁ phalaṁ.",
  "tha-ap560:14.1_0": "Manussayonimāgantvā,",
  "tha-ap560:14.2_0": "sukhito homahaṁ tadā;",
  "tha-ap560:14.3_0": "Bhogā me ūnatā natthi,",
  "tha-ap560:14.4_0": "bhisadānassidaṁ phalaṁ.",
  "tha-ap560:15.1_0": "Anukampitako tena,",
  "tha-ap560:15.2_0": "devadevena tādinā;",
  "tha-ap560:15.3_0": "Sabbāsavaparikkhīṇā,",
  "tha-ap560:15.4_0": "natthi dāni punabbhavo.",
  "tha-ap560:16.1_0": "Satasahassito kappe,",
  "tha-ap560:16.2_0": "yaṁ bhisaṁ adadiṁ tadā;",
  "tha-ap560:16.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap560:16.4_0": "bhisadānassidaṁ phalaṁ.",
  "tha-ap560:17.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap560:17.2_0": "…pe…",
  "tha-ap560:17.3_0": "viharāmi anāsavo.",
  "tha-ap560:18.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap560:18.2_0": "…pe…",
  "tha-ap560:18.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap560:19.1_0": "Paṭisambhidā catasso,",
  "tha-ap560:19.2_0": "…pe…",
  "tha-ap560:19.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap560:20.1_0": "Itthaṁ sudaṁ āyasmā bhaddajitthero imā gāthāyo abhāsitthāti.",
  "tha-ap560:21.1_0": "Bhaddajittherassāpadānaṁ aṭṭhamaṁ."
}