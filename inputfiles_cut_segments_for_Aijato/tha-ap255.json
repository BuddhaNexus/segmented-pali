{
  "tha-ap255:0.1_0": "Therāpadāna",
  "tha-ap255:0.2_0": "Thomakavagga",
  "tha-ap255:0.3_0": "3. Citakapūjakattheraapadāna",
  "tha-ap255:1.1_0": "“Ānando nāma sambuddho,",
  "tha-ap255:1.2_0": "sayambhū aparājito;",
  "tha-ap255:1.3_0": "Araññe parinibbāyi,",
  "tha-ap255:1.4_0": "amanussamhi kānane.",
  "tha-ap255:2.1_0": "Devalokā idhāgantvā,",
  "tha-ap255:2.2_0": "citaṁ katvānahaṁ tadā;",
  "tha-ap255:2.3_0": "Sarīraṁ tattha jhāpesiṁ,",
  "tha-ap255:2.4_0": "sakkārañca akāsahaṁ.",
  "tha-ap255:3.1_0": "Ekanavutito kappe,",
  "tha-ap255:3.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap255:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap255:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap255:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap255:4.2_0": "…pe…",
  "tha-ap255:4.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap255:5.1_0": "Itthaṁ sudaṁ āyasmā citakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap255:6.1_0": "Citakapūjakattherassāpadānaṁ tatiyaṁ."
}