{
  "anya-e0703n15:0_0": "Soḷasama pariccheda",
  "anya-e0703n15:1_0": "Cetiyapabbatavihāra paṭiggahako",
  "anya-e0703n15:2_0": "1.",
  "anya-e0703n15:3_0": "Pure caritvā piṇḍāya, karitvā janasaṅgahaṁ;",
  "anya-e0703n15:4_0": "Rājagehamhi bhuñjanto, kārento rājasaṅgahaṁ.",
  "anya-e0703n15:5_0": "2.",
  "anya-e0703n15:6_0": "Chabbasadivase thero, mahāmeghavane vasī;",
  "anya-e0703n15:7_0": "Āsaḷhasukkapakkhassa, terase divase pana.",
  "anya-e0703n15:8_0": "3.",
  "anya-e0703n15:9_0": "Rājagehamhi bhuñjitvā, mahārañño mahāmati;",
  "anya-e0703n15:10_0": "Mahā’ppamādasuttantaṁ, desayitvā tato ca so.",
  "anya-e0703n15:11_0": "4.",
  "anya-e0703n15:12_0": "Vihārakaraṇaṁ icchaṁ, tattha cetiyapabbate;",
  "anya-e0703n15:13_0": "Nikkhamma purimadvārā, agā cetiyapabbataṁ.",
  "anya-e0703n15:14_0": "5.",
  "anya-e0703n15:15_0": "Theraṁ tattha gataṁ sutvā, rathaṁ āruyha bhūpati;",
  "anya-e0703n15:16_0": "Deviyo dve ca ādāya, therassānupadaṁ akā.",
  "anya-e0703n15:17_0": "6.",
  "anya-e0703n15:18_0": "Therā nāgacatukkamhi, nahātvā rahade tahiṁ;",
  "anya-e0703n15:19_0": "Pabbatārohaṇatthāya, aṭṭhaṁsu paṭipāṭiyā.",
  "anya-e0703n15:20_0": "7.",
  "anya-e0703n15:21_0": "Rājā rathā tado’ruyha, sabbe there’bhivādayi;",
  "anya-e0703n15:22_0": "Uṇhe kilante kiṁrāja, āgatosī’ti ahute.",
  "anya-e0703n15:23_0": "8.",
  "anya-e0703n15:24_0": "Tumhākaṁ gamanāsaṅkī, āgatomhī’ti bhāsite;",
  "anya-e0703n15:25_0": "Idheva vassaṁ vasituṁ, āgatamhā’ti bhāsiya.",
  "anya-e0703n15:26_0": "9.",
  "anya-e0703n15:27_0": "Tassūpanāyikaṁ thero, khandhakaṁ khandhakovido;",
  "anya-e0703n15:28_0": "Kathesi rañño taṁ sutvā, bhāgineyyo ca rājino.",
  "anya-e0703n15:29_0": "10.",
  "anya-e0703n15:30_0": "Mahāriṭṭho mahāmacco, pañcapaññāsabhātuhi;",
  "anya-e0703n15:31_0": "Saddhiṁ jeṭṭhakaniṭṭhehi, rājānamabhito ṭhito.",
  "anya-e0703n15:32_0": "11.",
  "anya-e0703n15:33_0": "Yācitvā tadahu ceva, pabbajuṁ therasantike;",
  "anya-e0703n15:34_0": "Pattārahattaṁ sabbepi, te khuragge mahāmatī.",
  "anya-e0703n15:35_0": "12.",
  "anya-e0703n15:36_0": "Kantakacetiyaṭhāne, parito tadaheva so;",
  "anya-e0703n15:37_0": "Kammāni ārabhāpetvā, leṇāni aṭṭhasaṭṭhiyo.",
  "anya-e0703n15:38_0": "13.",
  "anya-e0703n15:39_0": "Agamāsi puraṁ rājā, therā tattheva te vasuṁ;",
  "anya-e0703n15:40_0": "Kāle piṇḍāya nagaraṁ, pavisantā’nukampakā.",
  "anya-e0703n15:41_0": "14.",
  "anya-e0703n15:42_0": "Niṭṭhite leṇakammamhi, āsaḷhipuṇṇamāsiyaṁ;",
  "anya-e0703n15:43_0": "Gantvā adāsi therānaṁ, rājā vihāradakkhiṇaṁ.",
  "anya-e0703n15:44_0": "15.",
  "anya-e0703n15:45_0": "Dvattiṁsamāḷakānañca, vihārassa ca tassa kho;",
  "anya-e0703n15:46_0": "Sīmaṁ sīmātigo thero, bandhitvā tadaheva so.",
  "anya-e0703n15:47_0": "16.",
  "anya-e0703n15:48_0": "Tesaṁ pabbajjāpekkhānaṁ, akāsi upasampadaṁ;",
  "anya-e0703n15:49_0": "Sabbesaṁ sabbapaṭhamaṁ, baddhe tumbarumāḷake.",
  "anya-e0703n15:50_0": "17.",
  "anya-e0703n15:51_0": "Ete dvāsaṭṭhi arahanto, sabbe cetiyapabbate;",
  "anya-e0703n15:52_0": "Tattha vassaṁ upagantvā, akaṁsu rājasaṅgahaṁ.",
  "anya-e0703n15:53_0": "18.",
  "anya-e0703n15:54_0": "Devamanussagaṇagaṇitaṁ taṁ,",
  "anya-e0703n15:55_0": "Tañca gaṇaṁ guṇavitthatakittiṁ;",
  "anya-e0703n15:56_0": "Yānamupacca ca mānayamānā,",
  "anya-e0703n15:57_0": "Puññacayaṁ vipulaṁ akariṁsūti.",
  "anya-e0703n15:58_0": "Sujanapasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n15:59_0": "Cetiyapabbatavihārapaṭiggahako nāma",
  "anya-e0703n15:60_0": "Soḷasamo paricchedo."
}