{
  "tha-ap339:0.1_0": "Therāpadāna",
  "tha-ap339:0.2_0": "Gandhodakavagga",
  "tha-ap339:0.3_0": "7. Tiṇakuṭidāyakattheraapadāna",
  "tha-ap339:1.1_0": "“Nagare bandhumatiyā,",
  "tha-ap339:1.2_0": "ahosiṁ parakammiko;",
  "tha-ap339:1.3_0": "Parakammāyane yutto,",
  "tha-ap339:1.4_0": "parabhattaṁ apassito.",
  "tha-ap339:2.1_0": "Rahogato nisīditvā,",
  "tha-ap339:2.2_0": "evaṁ cintesahaṁ tadā;",
  "tha-ap339:2.3_0": "Buddho loke samuppanno,",
  "tha-ap339:2.4_0": "adhikāro ca natthi me.",
  "tha-ap339:3.1_0": "Kālo me gatiṁ sodhetuṁ,",
  "tha-ap339:3.2_0": "khaṇo me paṭipādito;",
  "tha-ap339:3.3_0": "Dukkho nirayasamphasso,",
  "tha-ap339:3.4_0": "apuññānañhi pāṇinaṁ.",
  "tha-ap339:4.1_0": "Evāhaṁ cintayitvāna,",
  "tha-ap339:4.2_0": "kammasāmiṁ upāgamiṁ;",
  "tha-ap339:4.3_0": "Ekāhaṁ kammaṁ yācitvā,",
  "tha-ap339:4.4_0": "vipinaṁ pāvisiṁ ahaṁ.",
  "tha-ap339:5.1_0": "Tiṇakaṭṭhañca valliñca,",
  "tha-ap339:5.2_0": "āharitvānahaṁ tadā;",
  "tha-ap339:5.3_0": "Tidaṇḍake ṭhapetvāna,",
  "tha-ap339:5.4_0": "akaṁ tiṇakuṭiṁ ahaṁ.",
  "tha-ap339:6.1_0": "Saṅghassatthāya kuṭikaṁ,",
  "tha-ap339:6.2_0": "niyyādetvāna taṁ ahaṁ;",
  "tha-ap339:6.3_0": "Tadaheyeva āgantvā,",
  "tha-ap339:6.4_0": "kammasāmiṁ upāgamiṁ.",
  "tha-ap339:7.1_0": "Tena kammena sukatena,",
  "tha-ap339:7.2_0": "tāvatiṁsamagacchahaṁ;",
  "tha-ap339:7.3_0": "Tattha me sukataṁ byamhaṁ,",
  "tha-ap339:7.4_0": "kuṭikāya sunimmitaṁ.",
  "tha-ap339:8.1_0": "Sahassakaṇḍaṁ satabheṇḍu,",
  "tha-ap339:8.2_0": "dhajālu haritāmayaṁ;",
  "tha-ap339:8.3_0": "Satasahassaniyyūhā,",
  "tha-ap339:8.4_0": "byamhe pātubhaviṁsu me.",
  "tha-ap339:9.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap339:9.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap339:9.3_0": "Mama saṅkappamaññāya,",
  "tha-ap339:9.4_0": "pāsādo upatiṭṭhati.",
  "tha-ap339:10.1_0": "Bhayaṁ vā chambhitattaṁ vā,",
  "tha-ap339:10.2_0": "lomahaṁso na vijjati;",
  "tha-ap339:10.3_0": "Tāsaṁ mama na jānāmi,",
  "tha-ap339:10.4_0": "tiṇakuṭikāyidaṁ phalaṁ.",
  "tha-ap339:11.1_0": "Sīhabyagghā ca dīpī ca,",
  "tha-ap339:11.2_0": "acchakokataracchakā;",
  "tha-ap339:11.3_0": "Sabbe maṁ parivajjenti,",
  "tha-ap339:11.4_0": "tiṇakuṭikāyidaṁ phalaṁ.",
  "tha-ap339:12.1_0": "Sarīsapā ca bhūtā ca,",
  "tha-ap339:12.2_0": "ahī kumbhaṇḍarakkhasā;",
  "tha-ap339:12.3_0": "Tepi maṁ parivajjenti,",
  "tha-ap339:12.4_0": "tiṇakuṭikāyidaṁ phalaṁ.",
  "tha-ap339:13.1_0": "Na pāpasupinassāpi,",
  "tha-ap339:13.2_0": "sarāmi dassanaṁ mama;",
  "tha-ap339:13.3_0": "Upaṭṭhitā sati mayhaṁ,",
  "tha-ap339:13.4_0": "tiṇakuṭikāyidaṁ phalaṁ.",
  "tha-ap339:14.1_0": "Tāyeva tiṇakuṭikāya,",
  "tha-ap339:14.2_0": "anubhotvāna sampadā;",
  "tha-ap339:14.3_0": "Gotamassa bhagavato,",
  "tha-ap339:14.4_0": "dhammaṁ sacchikariṁ ahaṁ.",
  "tha-ap339:15.1_0": "Ekanavutito kappe,",
  "tha-ap339:15.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap339:15.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap339:15.4_0": "tiṇakuṭikāyidaṁ phalaṁ.",
  "tha-ap339:16.1_0": "Paṭisambhidā catasso,",
  "tha-ap339:16.2_0": "…pe…",
  "tha-ap339:16.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap339:17.1_0": "Itthaṁ sudaṁ āyasmā tiṇakuṭidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap339:18.1_0": "Tiṇakuṭidāyakattherassāpadānaṁ sattamaṁ."
}