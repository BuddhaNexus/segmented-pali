{
  "tha-ap420:0.1_0": "Therāpadāna",
  "tha-ap420:0.2_0": "Bhaddālivagga",
  "tha-ap420:0.3_0": "8. Yāgudāyakattheraapadāna",
  "tha-ap420:1.1_0": "“Atithiṁ me gahetvāna,",
  "tha-ap420:1.2_0": "agacchiṁ gāmakaṁ tadā;",
  "tha-ap420:1.3_0": "Sampuṇṇanadikaṁ disvā,",
  "tha-ap420:1.4_0": "saṅghārāmaṁ upāgamiṁ.",
  "tha-ap420:2.1_0": "Āraññakā dhutadharā,",
  "tha-ap420:2.2_0": "jhāyino lūkhacīvarā;",
  "tha-ap420:2.3_0": "Vivekābhiratā dhīrā,",
  "tha-ap420:2.4_0": "saṅghārāme vasanti te.",
  "tha-ap420:3.1_0": "Gati tesaṁ upacchinnā,",
  "tha-ap420:3.2_0": "suvimuttāna tādinaṁ;",
  "tha-ap420:3.3_0": "Piṇḍāya te na gacchanti,",
  "tha-ap420:3.4_0": "oruddhanaditāya hi.",
  "tha-ap420:4.1_0": "Pasannacitto sumano,",
  "tha-ap420:4.2_0": "vedajāto katañjalī;",
  "tha-ap420:4.3_0": "Taṇḍulaṁ me gahetvāna,",
  "tha-ap420:4.4_0": "yāgudānaṁ adāsahaṁ.",
  "tha-ap420:5.1_0": "Pañcannaṁ yāguṁ datvāna,",
  "tha-ap420:5.2_0": "pasanno sehi pāṇibhi;",
  "tha-ap420:5.3_0": "Sakakammābhiraddhohaṁ,",
  "tha-ap420:5.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap420:6.1_0": "Maṇimayañca me byamhaṁ,",
  "tha-ap420:6.2_0": "nibbatti tidase gaṇe;",
  "tha-ap420:6.3_0": "Nārīgaṇehi sahito,",
  "tha-ap420:6.4_0": "modāmi byamhamuttame.",
  "tha-ap420:7.1_0": "Tettiṁsakkhattuṁ devindo,",
  "tha-ap420:7.2_0": "devarajjamakārayiṁ;",
  "tha-ap420:7.3_0": "Tiṁsakkhattuṁ cakkavattī,",
  "tha-ap420:7.4_0": "mahārajjamakārayiṁ.",
  "tha-ap420:8.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap420:8.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap420:8.3_0": "Devaloke manusse vā,",
  "tha-ap420:8.4_0": "anubhotvā sayaṁ ahaṁ.",
  "tha-ap420:9.1_0": "Pacchime bhave sampatte,",
  "tha-ap420:9.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap420:9.3_0": "Saha oropite kese,",
  "tha-ap420:9.4_0": "sabbaṁ sampaṭivijjhahaṁ.",
  "tha-ap420:10.1_0": "Khayato vayato cāpi,",
  "tha-ap420:10.2_0": "sammasanto kaḷevaraṁ;",
  "tha-ap420:10.3_0": "Pure sikkhāpadādānā,",
  "tha-ap420:10.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap420:11.1_0": "Sudinnaṁ me dānavaraṁ,",
  "tha-ap420:11.2_0": "vāṇijjaṁ sampayojitaṁ;",
  "tha-ap420:11.3_0": "Teneva yāgudānena,",
  "tha-ap420:11.4_0": "pattomhi acalaṁ padaṁ.",
  "tha-ap420:12.1_0": "Sokaṁ pariddavaṁ byādhiṁ,",
  "tha-ap420:12.2_0": "darathaṁ cittatāpanaṁ;",
  "tha-ap420:12.3_0": "Nābhijānāmi uppannaṁ,",
  "tha-ap420:12.4_0": "yāgudānassidaṁ phalaṁ.",
  "tha-ap420:13.1_0": "Yāguṁ saṅghassa datvāna,",
  "tha-ap420:13.2_0": "puññakkhette anuttare;",
  "tha-ap420:13.3_0": "Pañcānisaṁse anubhomi,",
  "tha-ap420:13.4_0": "aho yāgusuyiṭṭhatā.",
  "tha-ap420:14.1_0": "Abyādhitā rūpavatā,",
  "tha-ap420:14.2_0": "khippaṁ dhammanisantitā;",
  "tha-ap420:14.3_0": "Lābhitā annapānassa,",
  "tha-ap420:14.4_0": "āyu pañcamakaṁ mama.",
  "tha-ap420:15.1_0": "Yo koci vedaṁ janayaṁ,",
  "tha-ap420:15.2_0": "saṅghe yāguṁ dadeyya so;",
  "tha-ap420:15.3_0": "Imāni pañca ṭhānāni,",
  "tha-ap420:15.4_0": "paṭigaṇheyya paṇḍito.",
  "tha-ap420:16.1_0": "Karaṇīyaṁ kataṁ sabbaṁ,",
  "tha-ap420:16.2_0": "bhavā ugghāṭitā mayā;",
  "tha-ap420:16.3_0": "Sabbāsavā parikkhīṇā,",
  "tha-ap420:16.4_0": "natthi dāni punabbhavo.",
  "tha-ap420:17.1_0": "So ahaṁ vicarissāmi,",
  "tha-ap420:17.2_0": "gāmā gāmaṁ purā puraṁ;",
  "tha-ap420:17.3_0": "Namassamāno sambuddhaṁ,",
  "tha-ap420:17.4_0": "dhammassa ca sudhammataṁ.",
  "tha-ap420:18.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap420:18.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap420:18.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap420:18.4_0": "yāgudānassidaṁ phalaṁ.",
  "tha-ap420:19.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap420:19.2_0": "…pe…",
  "tha-ap420:19.3_0": "viharāmi anāsavo.",
  "tha-ap420:20.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap420:20.2_0": "…pe…",
  "tha-ap420:20.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap420:21.1_0": "Paṭisambhidā catasso,",
  "tha-ap420:21.2_0": "…pe…",
  "tha-ap420:21.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap420:22.1_0": "Itthaṁ sudaṁ āyasmā yāgudāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap420:23.1_0": "Yāgudāyakattherassāpadānaṁ aṭṭhamaṁ."
}