{
  "anya-e0703n59:0_0": "Saṭṭhima pariccheda",
  "anya-e0703n59:1_0": "Kumārodayo",
  "anya-e0703n59:2_0": "1.",
  "anya-e0703n59:3_0": " Rohaṇe nivasitthā’va, jayabāhumahīpati;",
  "anya-e0703n59:4_0": "Mittāvhā rājinī ceva, tadā kālamakaṁsu te.",
  "anya-e0703n59:5_0": "2.",
  "anya-e0703n59:6_0": " Sirīvallabhajāyā’tha, janesi sugalā duve;",
  "anya-e0703n59:7_0": "Māṇabharaṇakaṁ puttaṁ, puttiṁ līlāvatimpi ca.",
  "anya-e0703n59:8_0": "3.",
  "anya-e0703n59:9_0": " Māṇābharaṇabhūpāla-devī’pi ratanāvalī;",
  "anya-e0703n59:10_0": "Mittaṁ pabhāvatiñcāpi, alabhī dhītaro duve.",
  "anya-e0703n59:11_0": "4.",
  "anya-e0703n59:12_0": " Passantassa ubho tāyo, dhītaro vīrabāhuno;",
  "anya-e0703n59:13_0": "Tadā mahādipādassa, evaṁ āsi vitakkitaṁ.",
  "anya-e0703n59:14_0": "5.",
  "anya-e0703n59:15_0": " Lokābhisammate sabba-bhūpālanvayamuddhani;",
  "anya-e0703n59:16_0": "Visuddhe somavaṁsamhi, abhijātā mayaṁ pana.",
  "anya-e0703n59:17_0": "6.",
  "anya-e0703n59:18_0": " Pihanīyatarākārā, sabbasattisamunnatā;",
  "anya-e0703n59:19_0": "Nānāvijjāsu nipuṇā, hatthiassādisukkhamā.",
  "anya-e0703n59:20_0": "7.",
  "anya-e0703n59:21_0": " Tathā pekākinā ve’te, tayo vikkamabāhunā;",
  "anya-e0703n59:22_0": "Parājayaṁ paribhavaṁ, pāpitā bahuso raṇe.",
  "anya-e0703n59:23_0": "8.",
  "anya-e0703n59:24_0": " Sūnuno susamatthassa, visodhetu mimaṁ malaṁ;",
  "anya-e0703n59:25_0": "Na dissate pātubhāvo, aho no appapuññatā.",
  "anya-e0703n59:26_0": "9.",
  "anya-e0703n59:27_0": " Janavādakiliṭṭhena , rājattenāpi kiṁ mama;",
  "anya-e0703n59:28_0": "Idāni visayāsaṅgaṁ, hitvā kalyāṇakammasu.",
  "anya-e0703n59:29_0": "10.",
  "anya-e0703n59:30_0": " Appamattassa satataṁ, netabbā vāsarā’iti;",
  "anya-e0703n59:31_0": "Niyyātetvā amaccānaṁ, sabbaṁ rajjavicāraṇaṁ.",
  "anya-e0703n59:32_0": "11.",
  "anya-e0703n59:33_0": " Tahiṁ satta’ṭṭhamāsañhi, vasaṁ rattiyamekadā;",
  "anya-e0703n59:34_0": "Devarājaghareseyyaṁ, kappesi sīlasaṁyato.",
  "anya-e0703n59:35_0": "12.",
  "anya-e0703n59:36_0": " Tato paccūsakālamhi, devaputtaṁ mahiddhikaṁ;",
  "anya-e0703n59:37_0": "Vicittavatthābharaṇaṁ, gandhamālāvibhūsitaṁ.",
  "anya-e0703n59:38_0": "13.",
  "anya-e0703n59:39_0": " Uḷāratararūpena, dehobhāsena attano;",
  "anya-e0703n59:40_0": "Obhāsentaṁ asesā’sā, sūriyañca na bhuggataṁ.",
  "anya-e0703n59:41_0": "14.",
  "anya-e0703n59:42_0": " Vadantaṁ supine evaṁ, adakkhi daraṇīpati;",
  "anya-e0703n59:43_0": "Pasīdassu mahābhāga, pitobhava mahipati.",
  "anya-e0703n59:44_0": "15.",
  "anya-e0703n59:45_0": " Dhaññalakkhaṇasampanno, icchitatthassasādhako;",
  "anya-e0703n59:46_0": "Vinīto lokakuhara-byāpitejo parakkamo.",
  "anya-e0703n59:47_0": "16.",
  "anya-e0703n59:48_0": " Āṇabalayasokitti-bhāsuro sagguṇākaro;",
  "anya-e0703n59:49_0": "Lokasāsanasaṁvuddhi-karo puttavaro tava.",
  "anya-e0703n59:50_0": "17.",
  "anya-e0703n59:51_0": " Labbhīssate mahārāja, na cirasseva sampati;",
  "anya-e0703n59:52_0": "Puttadārādhivutthaṁ taṁ, puraṁ khippaṁ payāhīti.",
  "anya-e0703n59:53_0": "18.",
  "anya-e0703n59:54_0": " Pabujjhitvāna sañjāta-pītivegotha rattiyā;",
  "anya-e0703n59:55_0": "Vibhātāya tatopoṅkha-gāmaṁ gañchinaruttamo.",
  "anya-e0703n59:56_0": "19.",
  "anya-e0703n59:57_0": " Yathā diṭṭhappakārantaṁ, kathesi supinaṁ subhaṁ;",
  "anya-e0703n59:58_0": "Mahesī pamukhānaṁ so, amaccānaṁ mahīpati.",
  "anya-e0703n59:59_0": "20.",
  "anya-e0703n59:60_0": " Saddhiṁ mahesiyā tattha, patthento puttamuttamaṁ;",
  "anya-e0703n59:61_0": "Cintonto dānasīlādiṁ, subhaṁ nānappakārakaṁ.",
  "anya-e0703n59:62_0": "21.",
  "anya-e0703n59:63_0": " Athekadivasaṁkāle, paccūse supine pana;",
  "anya-e0703n59:64_0": "Sabbalakkhaṇasampannaṁ, sabbasetaṁ manoharaṁ.",
  "anya-e0703n59:65_0": "22.",
  "anya-e0703n59:66_0": " Dantīpotavaraṁ dantaṁ, kaṇṇe gaṇiyapemato;",
  "anya-e0703n59:67_0": "Pavisantamivattānaṁ, seyyāgabbhaṁ mahesiyā.",
  "anya-e0703n59:68_0": "23.",
  "anya-e0703n59:69_0": " Sampassiya pabujjhitvā, uṭṭhāya sayanāvarā;",
  "anya-e0703n59:70_0": "Sañjātapītipāmojja-vegapīṇitamānaso.",
  "anya-e0703n59:71_0": "24.",
  "anya-e0703n59:72_0": " Tāyaṁ velāyamedāsu-seyyāgabbhaṁ mahesiyā;",
  "anya-e0703n59:73_0": "Pavissasupinaṁ tassā, yathādiṭṭhaṁ pakāsayī.",
  "anya-e0703n59:74_0": "25.",
  "anya-e0703n59:75_0": " Ahampi tādisaṁ hatthi-potakaṁ sayanaṁ mama;",
  "anya-e0703n59:76_0": "Padakkhiṇaṁ karitvāna, ṭhitaṁ soṇḍe samādiya.",
  "anya-e0703n59:77_0": "26.",
  "anya-e0703n59:78_0": " Ākaḍḍhitvāna sayanaṁ, samāropiya pemato;",
  "anya-e0703n59:79_0": "Āliṅgiṁ supinamhīti, devī cāpi tamabravī.",
  "anya-e0703n59:80_0": "27.",
  "anya-e0703n59:81_0": " Ubho te aññamaññassa, diṭṭhamevaṁ pakāsiya;",
  "anya-e0703n59:82_0": "Uṭṭhāpesuṁ pahaṭṭhāva, vītaniddāruṇaṁ tadā.",
  "anya-e0703n59:83_0": "28.",
  "anya-e0703n59:84_0": " Tato pāto upaṭṭhātu, mupayātaṁ purohitaṁ;",
  "anya-e0703n59:85_0": "Nemittake ca pucchiṁsu, sunitvā te pamoditā.",
  "anya-e0703n59:86_0": "29.",
  "anya-e0703n59:87_0": " Na cirasseva puttassa, dhaññalakkhaṇasālino;",
  "anya-e0703n59:88_0": "Uppattiyā avassaṁ’va, bhavaṁtabbanti kittayuṁ.",
  "anya-e0703n59:89_0": "30.",
  "anya-e0703n59:90_0": " Taṁ suṇitvā amaccā ca, tathā nagaravāsino;",
  "anya-e0703n59:91_0": "Avindiṁsu janindo ca, sabbepīti mahussavaṁ.",
  "anya-e0703n59:92_0": "31.",
  "anya-e0703n59:93_0": " Tato paṭṭhāya sotthānaṁ, patthayaṁ patthivobhusaṁ;",
  "anya-e0703n59:94_0": "Bhikkhusaṅghena bahuso, bhaṇāpesi parittakaṁ.",
  "anya-e0703n59:95_0": "32.",
  "anya-e0703n59:96_0": " Maṇimuttādikaṁ cittaṁ, mahagghamanuvāsaraṁ;",
  "anya-e0703n59:97_0": "Pariccaji dānamukhe, yācakānamanekaso.",
  "anya-e0703n59:98_0": "33.",
  "anya-e0703n59:99_0": " Purohitādivippehi, vedavedaṅgaviññūhi;",
  "anya-e0703n59:100_0": "Vattāpesi ca homādi-vidhānaṁ sotthi sammataṁ.",
  "anya-e0703n59:101_0": "34.",
  "anya-e0703n59:102_0": " Suvinaṭṭhe vihāre ca, dhātugabbhe ca vāpiyo;",
  "anya-e0703n59:103_0": "Jiṇṇā ca paṭisaṅkhattuṁ, yojayī rājakappike.",
  "anya-e0703n59:104_0": "35.",
  "anya-e0703n59:105_0": " Dinaṁ nayante kalyāṇa-kammene’vaṁ narissare;",
  "anya-e0703n59:106_0": "Na ciraṁ saṇṭhahi gabbha-varo kucchimhi deviyā.",
  "anya-e0703n59:107_0": "36.",
  "anya-e0703n59:108_0": " Tatovagamma taṁ haṭṭha-pahaṭṭho so narissaro;",
  "anya-e0703n59:109_0": "Mahantaṁ deviyā gabbha-parihāramadāpayi.",
  "anya-e0703n59:110_0": "37.",
  "anya-e0703n59:111_0": " Paripakkagabbhā devī, kamena janayīsukaṁ;",
  "anya-e0703n59:112_0": "Samaye bhaddanakkhatta-muhuttenabhilakkhite.",
  "anya-e0703n59:113_0": "38.",
  "anya-e0703n59:114_0": " Suppasannā asesā ca, disāyo taṁkhaṇe ahu;",
  "anya-e0703n59:115_0": "Samīraṇe ca vāsiṁsu, sugandhimudusītalā.",
  "anya-e0703n59:116_0": "39.",
  "anya-e0703n59:117_0": " Dantīnaṁ koñcanādena, hayānaṁ hesitena ca;",
  "anya-e0703n59:118_0": "Rājaṅgaṇaṁ tadājātaṁ, mahākolāhalā kūlaṁ.",
  "anya-e0703n59:119_0": "40.",
  "anya-e0703n59:120_0": " Accherātisaye evaṁ, pātubhūte anekadhā;",
  "anya-e0703n59:121_0": "Disvā taṁ vimhayappatto, māṇabharaṇabhūpati.",
  "anya-e0703n59:122_0": "41.",
  "anya-e0703n59:123_0": " Sutvā nijassa puttassa, tadā sañjātasāsanaṁ;",
  "anya-e0703n59:124_0": "Amatenābhisittova, pītipuṇṇamanoratho.",
  "anya-e0703n59:125_0": "42.",
  "anya-e0703n59:126_0": " Mocāpetvā tadā kārā-ghare baddhe bahūjane;",
  "anya-e0703n59:127_0": "Dānaṁ uḷāraṁ samaṇa-brāhmaṇānaṁ padāpayi.",
  "anya-e0703n59:128_0": "43.",
  "anya-e0703n59:129_0": " Amaccapamukhā cāpi, janāpuranivāsino;",
  "anya-e0703n59:130_0": "Kadalītoraṇādīhi, rājadhānī manekadhā.",
  "anya-e0703n59:131_0": "44.",
  "anya-e0703n59:132_0": " Alaṅkaritvā sakalaṁ, sumaṇḍitapasādhitā;",
  "anya-e0703n59:133_0": "Chaṇaṁ mahantaṁ vattesuṁ, katipāhaṁ manoramaṁ.",
  "anya-e0703n59:134_0": "45.",
  "anya-e0703n59:135_0": " Vede vuttavidhānena, jātakammādikaṁ vidhiṁ;",
  "anya-e0703n59:136_0": "Sabbaṁ samāpayitvāna, kumārassā’vanīpati.",
  "anya-e0703n59:137_0": "46.",
  "anya-e0703n59:138_0": " Purohitādayo vippe, tato lakkhaṇapāṭhake;",
  "anya-e0703n59:139_0": "Āṇāpetvāna sakkāra-sammānavidhipubbakaṁ.",
  "anya-e0703n59:140_0": "47.",
  "anya-e0703n59:141_0": " Niyojesi kumārassa, lakkhaṇānaṁ paṭiggahe;",
  "anya-e0703n59:142_0": "Sādhakaṁ sakalaṁ tassa, yatthapādādilakkhaṇaṁ.",
  "anya-e0703n59:143_0": "48.",
  "anya-e0703n59:144_0": " Upadhāriya mahāmacca-gaṇamajjhagatassa te;",
  "anya-e0703n59:145_0": "Rājino deviyā cāpi, pakāsesuṁ pamoditā.",
  "anya-e0703n59:146_0": "49.",
  "anya-e0703n59:147_0": " Laṅkādīpaṁ ṭhapetvāna, jambudīpatalampi ca;",
  "anya-e0703n59:148_0": "Ekacchattaṅkitaṁ katvā-nubhottuṁ nipuṇo iti.",
  "anya-e0703n59:149_0": "50.",
  "anya-e0703n59:150_0": " Te santappiya bhogehi, bhiyyo pucchittha sādaraṁ;",
  "anya-e0703n59:151_0": "Sandissamānaṁ yaṁkiñci, ariṭṭhaṁ atthi natthī’ti.",
  "anya-e0703n59:152_0": "51.",
  "anya-e0703n59:153_0": " Dīghāyuko kumāro’yaṁ, kiñci paññāyate vata;",
  "anya-e0703n59:154_0": "Janakāriṭṭhayogo’ti, te mahīpatino’bravuṁ.",
  "anya-e0703n59:155_0": "52.",
  "anya-e0703n59:156_0": " Tassārijanasammaddi-patāpabhujayo gato;",
  "anya-e0703n59:157_0": "So parakkamabāhū’ti, anvatthanāmamaggahī.",
  "anya-e0703n59:158_0": "53.",
  "anya-e0703n59:159_0": " Kaṇṇave dhamahañceva, annupāsanamaṅgalaṁ;",
  "anya-e0703n59:160_0": "Kārāpiya vidhānaññū, yathāvidhimasesato.",
  "anya-e0703n59:161_0": "54.",
  "anya-e0703n59:162_0": " Rañño vikkamabāhussa, saputtuppattisāsanaṁ;",
  "anya-e0703n59:163_0": "Vattuṁ sadūte pesesi, pulatthinagaraṁ tadā.",
  "anya-e0703n59:164_0": "55.",
  "anya-e0703n59:165_0": " Tehiso bhāgineyyassa, mahābhāgattanampi ca;",
  "anya-e0703n59:166_0": "Janakāriṭṭhayogañca, sutvā vikkamabāhuso.",
  "anya-e0703n59:167_0": "56.",
  "anya-e0703n59:168_0": " Dhaññaṁ vijayarājādi-rājamālāya nāyakaṁ;",
  "anya-e0703n59:169_0": "Maṇiṁva bhāsuraṁ mayhaṁ, bhāgineyyaṁ janesiso.",
  "anya-e0703n59:170_0": "57.",
  "anya-e0703n59:171_0": " Hāni yākācisatataṁ, yathā tassa na hessati;",
  "anya-e0703n59:172_0": "Tathā mamantikeyeva, kumāro ettha vaḍḍhataṁ.",
  "anya-e0703n59:173_0": "58.",
  "anya-e0703n59:174_0": " Aladdhaṁ labhituṁ lābhaṁ, laddhañca parirakkhituṁ;",
  "anya-e0703n59:175_0": "Sabbathā na samatthoyaṁ, putto gajabāhu mama.",
  "anya-e0703n59:176_0": "59.",
  "anya-e0703n59:177_0": " Sūrabhāvādiyutto’pi, mahindavhaparosuto;",
  "anya-e0703n59:178_0": "Nihīno mātugottena, na rajjassa raho mama.",
  "anya-e0703n59:179_0": "60.",
  "anya-e0703n59:180_0": " Ṭhitassa vikkajātena, nekaso sañcitena me;",
  "anya-e0703n59:181_0": "Rajjassa bhāgineyyo’va, kāmaṁ bhāgī bhavissati.",
  "anya-e0703n59:182_0": "61.",
  "anya-e0703n59:183_0": " Itipesesi dūte so, ānetuṁ taṁ kumārakaṁ;",
  "anya-e0703n59:184_0": "Kumārā bharaṇaṁ datvā, sesaṁ sārañcupāyanaṁ.",
  "anya-e0703n59:185_0": "62.",
  "anya-e0703n59:186_0": " Sabbaṁ dūtamukhā sutvā, vīrabāhu mahīpati;",
  "anya-e0703n59:187_0": "Tassetaṁ vacanaṁ yuttaṁ, vuttaṁ mehita buddhiyā.",
  "anya-e0703n59:188_0": "63.",
  "anya-e0703n59:189_0": " Tathāpi ca nijāriṭṭha-paṭikāratthamīdisaṁ;",
  "anya-e0703n59:190_0": "Orasaṁ puttaratanaṁ, pesetuṁ nā’nurūpakaṁ.",
  "anya-e0703n59:191_0": "64.",
  "anya-e0703n59:192_0": " Kiñca tattha kumāramhi, nīte vikkama bāhuno;",
  "anya-e0703n59:193_0": "Pakkho laddhamahāvāha-balo viya hutāsano.",
  "anya-e0703n59:194_0": "65.",
  "anya-e0703n59:195_0": " Accunnatena mahatā, tejasā sañjalissati;",
  "anya-e0703n59:196_0": "Hānireva vatamhākaṁ, mahatī hessate bhusaṁ.",
  "anya-e0703n59:197_0": "66.",
  "anya-e0703n59:198_0": " Iti hatthe gatānaṁ so, dūtānaṁ thanayaṁ sakaṁ;",
  "anya-e0703n59:199_0": "Apesetvā visajjesi, pasādiya manena so.",
  "anya-e0703n59:200_0": "67.",
  "anya-e0703n59:201_0": " Saputtadārehi samaggavāsaṁ,",
  "anya-e0703n59:202_0": "Narādinātho nivasaṁ tahiṁso;",
  "anya-e0703n59:203_0": "Tibbena phuṭṭho mahatāgadena,",
  "anya-e0703n59:204_0": "Rajjena saddhiṁ vijahittha desaṁ.",
  "anya-e0703n59:205_0": "Sujanappasādasaṁve gatthāya kate mahāvaṁse",
  "anya-e0703n59:206_0": "Kumārodayo nāma",
  "anya-e0703n59:207_0": "Saṭṭhimo paricchedo."
}