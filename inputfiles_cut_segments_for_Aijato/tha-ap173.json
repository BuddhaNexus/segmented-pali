{
  "tha-ap173:0.1_0": "Therāpadāna",
  "tha-ap173:0.2_0": "Kumudavagga",
  "tha-ap173:0.3_0": "1. Kumudamāliyattheraapadāna",
  "tha-ap173:1.1_0": "“Pabbate himavantamhi,",
  "tha-ap173:1.2_0": "mahājātassaro ahu;",
  "tha-ap173:1.3_0": "Tatthajo rakkhaso āsiṁ,",
  "tha-ap173:1.4_0": "ghorarūpo mahabbalo.",
  "tha-ap173:2.1_0": "Kumudaṁ pupphate tattha,",
  "tha-ap173:2.2_0": "cakkamattāni jāyare;",
  "tha-ap173:2.3_0": "Ocināmi ca taṁ pupphaṁ,",
  "tha-ap173:2.4_0": "balino samitiṁ tadā.",
  "tha-ap173:3.1_0": "Atthadassī tu bhagavā,",
  "tha-ap173:3.2_0": "dvipadindo narāsabho;",
  "tha-ap173:3.3_0": "Pupphasaṅkocitaṁ disvā,",
  "tha-ap173:3.4_0": "āgacchi mama santikaṁ.",
  "tha-ap173:4.1_0": "Upāgatañca sambuddhaṁ,",
  "tha-ap173:4.2_0": "devadevaṁ narāsabhaṁ;",
  "tha-ap173:4.3_0": "Sabbañca pupphaṁ paggayha,",
  "tha-ap173:4.4_0": "buddhassa abhiropayiṁ.",
  "tha-ap173:5.1_0": "Yāvatā himavantantā,",
  "tha-ap173:5.2_0": "parisā sā tadā ahu;",
  "tha-ap173:5.3_0": "Tāvacchadanasampanno,",
  "tha-ap173:5.4_0": "agamāsi tathāgato.",
  "tha-ap173:6.1_0": "Aṭṭhārase kappasate,",
  "tha-ap173:6.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap173:6.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap173:6.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap173:7.1_0": "Ito pannarase kappe,",
  "tha-ap173:7.2_0": "sattāhesuṁ janādhipā;",
  "tha-ap173:7.3_0": "Sahassarathanāmā te,",
  "tha-ap173:7.4_0": "cakkavattī mahabbalā.",
  "tha-ap173:8.1_0": "Paṭisambhidā catasso,",
  "tha-ap173:8.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap173:8.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap173:8.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap173:9.1_0": "Itthaṁ sudaṁ āyasmā kumudamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap173:10.1_0": "Kumudamāliyattherassāpadānaṁ paṭhamaṁ."
}