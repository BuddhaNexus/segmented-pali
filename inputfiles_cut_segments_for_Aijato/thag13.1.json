{
  "thag13.1:0.1_0": "Theragāthā",
  "thag13.1:0.2_0": "Terasanipāta",
  "thag13.1:0.3_0": "Paṭhamavagga",
  "thag13.1:0.4_0": "13.1 Soṇakoḷivisattheragāthā",
  "thag13.1:1.1_0": "“Yāhu raṭṭhe samukkaṭṭho,",
  "thag13.1:1.2_0": "rañño aṅgassa paddhagū;",
  "thag13.1:1.3_0": "Svajja dhammesu ukkaṭṭho,",
  "thag13.1:1.4_0": "soṇo dukkhassa pāragū.",
  "thag13.1:2.1_0": "Pañca chinde pañca jahe,",
  "thag13.1:2.2_0": "pañca cuttari bhāvaye;",
  "thag13.1:2.3_0": "Pañcasaṅgātigo bhikkhu,",
  "thag13.1:2.4_0": "oghatiṇṇoti vuccati.",
  "thag13.1:3.1_0": "Unnaḷassa pamattassa,",
  "thag13.1:3.2_0": "bāhirāsassa bhikkhuno;",
  "thag13.1:3.3_0": "Sīlaṁ samādhi paññā ca,",
  "thag13.1:3.4_0": "pāripūriṁ na gacchati.",
  "thag13.1:4.1_0": "Yañhi kiccaṁ apaviddhaṁ,",
  "thag13.1:4.2_0": "akiccaṁ pana karīyati;",
  "thag13.1:4.3_0": "Unnaḷānaṁ pamattānaṁ,",
  "thag13.1:4.4_0": "tesaṁ vaḍḍhanti āsavā.",
  "thag13.1:5.1_0": "Yesañca susamāraddhā,",
  "thag13.1:5.2_0": "niccaṁ kāyagatā sati;",
  "thag13.1:5.3_0": "Akiccaṁ te na sevanti,",
  "thag13.1:5.4_0": "kicce sātaccakārino;",
  "thag13.1:5.5_0": "Satānaṁ sampajānānaṁ,",
  "thag13.1:5.6_0": "atthaṁ gacchanti āsavā.",
  "thag13.1:6.1_0": "Ujumaggamhi akkhāte,",
  "thag13.1:6.2_0": "gacchatha mā nivattatha;",
  "thag13.1:6.3_0": "Attanā codayattānaṁ,",
  "thag13.1:6.4_0": "nibbānamabhihāraye.",
  "thag13.1:7.1_0": "Accāraddhamhi vīriyamhi,",
  "thag13.1:7.2_0": "satthā loke anuttaro;",
  "thag13.1:7.3_0": "Vīṇopamaṁ karitvā me,",
  "thag13.1:7.4_0": "dhammaṁ desesi cakkhumā;",
  "thag13.1:7.5_0": "Tassāhaṁ vacanaṁ sutvā,",
  "thag13.1:7.6_0": "vihāsiṁ sāsane rato.",
  "thag13.1:8.1_0": "Samathaṁ paṭipādesiṁ,",
  "thag13.1:8.2_0": "uttamatthassa pattiyā;",
  "thag13.1:8.3_0": "Tisso vijjā anuppattā,",
  "thag13.1:8.4_0": "kataṁ buddhassa sāsanaṁ.",
  "thag13.1:9.1_0": "Nekkhamme adhimuttassa,",
  "thag13.1:9.2_0": "pavivekañca cetaso;",
  "thag13.1:9.3_0": "Abyāpajjādhimuttassa,",
  "thag13.1:9.4_0": "upādānakkhayassa ca.",
  "thag13.1:10.1_0": "Taṇhakkhayādhimuttassa,",
  "thag13.1:10.2_0": "asammohañca cetaso;",
  "thag13.1:10.3_0": "Disvā āyatanuppādaṁ,",
  "thag13.1:10.4_0": "sammā cittaṁ vimuccati.",
  "thag13.1:11.1_0": "Tassa sammā vimuttassa,",
  "thag13.1:11.2_0": "santacittassa bhikkhuno;",
  "thag13.1:11.3_0": "Katassa paṭicayo natthi,",
  "thag13.1:11.4_0": "karaṇīyaṁ na vijjati.",
  "thag13.1:12.1_0": "Selo yathā ekagghano,",
  "thag13.1:12.2_0": "vātena na samīrati;",
  "thag13.1:12.3_0": "Evaṁ rūpā rasā saddā,",
  "thag13.1:12.4_0": "gandhā phassā ca kevalā.",
  "thag13.1:13.1_0": "Iṭṭhā dhammā aniṭṭhā ca,",
  "thag13.1:13.2_0": "nappavedhenti tādino;",
  "thag13.1:13.3_0": "Ṭhitaṁ cittaṁ visaññuttaṁ,",
  "thag13.1:13.4_0": "vayañcassānupassatī”ti.",
  "thag13.1:13.5_0": "…",
  "thag13.1:13.6_0": "Soṇo koḷiviso thero ….",
  "thag13.1:13.7_0": "Terasanipāto niṭṭhito.",
  "thag13.1:14.0_0": "Tatruddānaṁ",
  "thag13.1:14.1_0": "Soṇo koḷiviso thero,",
  "thag13.1:14.2_0": "ekoyeva mahiddhiko;",
  "thag13.1:14.3_0": "Terasamhi nipātamhi,",
  "thag13.1:14.4_0": "gāthāyo cettha terasāti."
}