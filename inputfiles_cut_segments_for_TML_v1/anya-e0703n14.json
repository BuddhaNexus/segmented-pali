{
  "anya-e0703n14:0_0": "Pañcadasama pariccheda",
  "anya-e0703n14:1_0": "Mahāvihāra paṭiggahako",
  "anya-e0703n14:2_0": "1.",
  "anya-e0703n14:3_0": "Hatthisālāpi sambādhā, iti tattha samāgatā;",
  "anya-e0703n14:4_0": "Te nandanavane ramme, dakkhiṇadvārato bahi.",
  "anya-e0703n14:5_0": "2.",
  "anya-e0703n14:6_0": "Rājuyyāne ghanacchāye, sītale nīlasaddale;",
  "anya-e0703n14:7_0": "Paññāpesuṁ āsanāni, therānaṁ sādarā narā.",
  "anya-e0703n14:8_0": "3.",
  "anya-e0703n14:9_0": "Nikkhamma dakkhiṇadvārā, thero tattha nisīdi ca;",
  "anya-e0703n14:10_0": "Mahākulīnā cā’gamma, itthiyo bahukā tahiṁ.",
  "anya-e0703n14:11_0": "4.",
  "anya-e0703n14:12_0": "Theraṁ upanisīdiṁsu, uyyānaṁ pūrayantiyo;",
  "anya-e0703n14:13_0": "Bālapaṇḍitasuttantaṁ, tāsaṁ thero adesayi.",
  "anya-e0703n14:14_0": "5.",
  "anya-e0703n14:15_0": "Sahassaṁ itthiyo tāsu, paṭhamaṁ phalamajjhaguṁ;",
  "anya-e0703n14:16_0": "Evaṁ tattheva uyyāne, sāyaṇhasamayo ahu.",
  "anya-e0703n14:17_0": "6.",
  "anya-e0703n14:18_0": "Tato therā nikkhamiṁsu, ‘‘yāma taṁ pabbataṁ’’ iti;",
  "anya-e0703n14:19_0": "Rañño paṭinivedesuṁ, sīghaṁ rājā upāgami.",
  "anya-e0703n14:20_0": "7.",
  "anya-e0703n14:21_0": "Upāgammā’bravī theraṁ, ‘‘sāyaṁ dūro ca pabbato;",
  "anya-e0703n14:22_0": "Idheva nandanuyyāne, nivāso phāsuko iti.",
  "anya-e0703n14:23_0": "8.",
  "anya-e0703n14:24_0": "Purassa accāsannattā, ‘‘asāruppa’’nti bhāsite;",
  "anya-e0703n14:25_0": "‘‘Mahāmeghavanuyyānaṁ, nātidūrāti santike.",
  "anya-e0703n14:26_0": "9.",
  "anya-e0703n14:27_0": "Rammaṁ chāyūdakūpetaṁ, nivāso tattha rocatu;",
  "anya-e0703n14:28_0": "Nivattitabbaṁ bhante’’nti, thero tattha nivattayi.",
  "anya-e0703n14:29_0": "10.",
  "anya-e0703n14:30_0": "Tasmiṁ nivattaṭhānamhi, kadambanadiyantike;",
  "anya-e0703n14:31_0": "Nivattacetiyaṁ nāma, kataṁ vuccati cetiyaṁ.",
  "anya-e0703n14:32_0": "11.",
  "anya-e0703n14:33_0": "Taṁ nandanā dakkhiṇena, nayaṁ theraṁ rathesabho;",
  "anya-e0703n14:34_0": "Mahāmeghavanuyyānaṁ, pācinadvārakaṁ nayi.",
  "anya-e0703n14:35_0": "12.",
  "anya-e0703n14:36_0": "Tattha rājaghare ramme, mañcapīṭhāni sādhukaṁ;",
  "anya-e0703n14:37_0": "Sādhūti santharāpetvā, ‘‘vasate’tta sukhaṁ’’ iti.",
  "anya-e0703n14:38_0": "13.",
  "anya-e0703n14:39_0": "Rājā there’bhivādetvā, amaccaparivārito;",
  "anya-e0703n14:40_0": "Puraṁ pāvisi therā tu, taṁ rattiṁ tattha te vasuṁ.",
  "anya-e0703n14:41_0": "14.",
  "anya-e0703n14:42_0": "Pabhāteyeva pupphāni, gāhetvā dharaṇīpati;",
  "anya-e0703n14:43_0": "There upacca vanditvā, pūjetvā kusumehi ca.",
  "anya-e0703n14:44_0": "15.",
  "anya-e0703n14:45_0": "Pucchi kacci sukhaṁ vuṭṭhaṁ, uyyānaṁ phāsukaṁ iti;",
  "anya-e0703n14:46_0": "Sukhaṁ vutthaṁ mahārāja, uyyānaṁ yati phāsukaṁ.",
  "anya-e0703n14:47_0": "16.",
  "anya-e0703n14:48_0": "Ārāmo kappate bhante, saṅghassā’’ti apucchi so;",
  "anya-e0703n14:49_0": "‘‘Kappate’’iti vatvāna, kappākappesu kovido.",
  "anya-e0703n14:50_0": "17.",
  "anya-e0703n14:51_0": "Thero veḷuvanārāma, paṭiggahaṇamabravi;",
  "anya-e0703n14:52_0": "Taṁ sutvā abhihaṭṭho so, tuṭṭhahaṭṭho mahājano.",
  "anya-e0703n14:53_0": "18.",
  "anya-e0703n14:54_0": "Therānaṁ vandanatthāya, devī tu anulāgatā;",
  "anya-e0703n14:55_0": "Saddhiṁ pañcasatitthīhi, dutiyaṁ phalamajjhagā.",
  "anya-e0703n14:56_0": "19.",
  "anya-e0703n14:57_0": "Sā pañcasatā devī, anulā’ha mahīpati;",
  "anya-e0703n14:58_0": "‘‘Pabbajissāma devā’’ti, rājā theramavoca so.",
  "anya-e0703n14:59_0": "20.",
  "anya-e0703n14:60_0": "Pabbājetha imāyo’’ti, thero āha mahīpatiṁ;",
  "anya-e0703n14:61_0": "‘‘Na kappati mahārāja, pabbājetuṁ thiyo hino.",
  "anya-e0703n14:62_0": "21.",
  "anya-e0703n14:63_0": "Atthi pāṭaliputtasmiṁ, bhikkhunī me kaniṭṭhikā;",
  "anya-e0703n14:64_0": "Saṅghamittāti nāmena, vissutā sā bahussutā.",
  "anya-e0703n14:65_0": "22.",
  "anya-e0703n14:66_0": "Narindasamaṇindassa, mahābodhidumindato;",
  "anya-e0703n14:67_0": "Dakkhiṇaṁ sākhamādāya, tathā bhikkhuniyo varā.",
  "anya-e0703n14:68_0": "23.",
  "anya-e0703n14:69_0": "Āgacchatū’ti pesehi, rañño no pitu santikaṁ;",
  "anya-e0703n14:70_0": "Pabbājessati sā therī, āgatā itthiyo imā.",
  "anya-e0703n14:71_0": "24.",
  "anya-e0703n14:72_0": "‘‘Sādhu’’ti vatvā gaṇhitvā, rājā bhiṅkāramuttamaṁ;",
  "anya-e0703n14:73_0": "‘‘Mahāmeghavanuyyānaṁ, dammi saṅghassi’maṁ iti.",
  "anya-e0703n14:74_0": "25.",
  "anya-e0703n14:75_0": "Mahindatherassa kare, dakkhiṇodakamā’kirī;",
  "anya-e0703n14:76_0": "Mahiyā patite toye, akampittha mahā mahī.",
  "anya-e0703n14:77_0": "26.",
  "anya-e0703n14:78_0": "‘‘Tasmā kampati bhūmī’’ti, bhūmipālo apucchi taṁ;",
  "anya-e0703n14:79_0": "Patiṭṭhitattā dīpamhi, sāsanassā’ti so bravi.",
  "anya-e0703n14:80_0": "27.",
  "anya-e0703n14:81_0": "Therassa upanāmesi, jātipupphāni jātimā;",
  "anya-e0703n14:82_0": "Thero rājagharaṁ gantvā, tassa dakkhiṇato ṭhito.",
  "anya-e0703n14:83_0": "28.",
  "anya-e0703n14:84_0": "Rukkhamhi picule aṭṭha, pupphamuṭṭhī samokirī;",
  "anya-e0703n14:85_0": "Tatthāpi puthavī kampi, puṭṭho tassā’ha kāraṇaṁ.",
  "anya-e0703n14:86_0": "29.",
  "anya-e0703n14:87_0": "Ahosi tiṇṇaṁ buddhānaṁ, kāle’pi idha mālako;",
  "anya-e0703n14:88_0": "Narindasaṅghakammatthaṁ, bhavissati idānipi.",
  "anya-e0703n14:89_0": "30.",
  "anya-e0703n14:90_0": "Rājagehā uttarato, cārupokkharaṇiṁ agā;",
  "anya-e0703n14:91_0": "Tattakā neva pupphāni, thero tatthāpi okiri.",
  "anya-e0703n14:92_0": "31.",
  "anya-e0703n14:93_0": "Tatthā’pi puthuvī kampi, puṭṭho tassā’ha kāraṇaṁ;",
  "anya-e0703n14:94_0": "‘‘Jantaghara pokkharaṇī, ayaṁ hessati bhūmipa’’.",
  "anya-e0703n14:95_0": "32.",
  "anya-e0703n14:96_0": "Tasseva rājagehassa, gantvāna dvārakoṭṭhakaṁ;",
  "anya-e0703n14:97_0": "Tattakehe’va pupphehi, taṁ ṭhānaṁ pūjayī isi.",
  "anya-e0703n14:98_0": "33.",
  "anya-e0703n14:99_0": "Tatthāpi puthuvīkampi, haṭṭhalomo atīvaso;",
  "anya-e0703n14:100_0": "Rājā taṁ kāraṇaṁ pucchi, thero tassā’ha kāraṇaṁ.",
  "anya-e0703n14:101_0": "34.",
  "anya-e0703n14:102_0": "Imamhi kappe buddhānaṁ, tiṇṇannaṁ bodhirukkhato;",
  "anya-e0703n14:103_0": "Ānetvā dakkhiṇāsākhā, ropitā idha bhūmipa.",
  "anya-e0703n14:104_0": "35.",
  "anya-e0703n14:105_0": "Tathāgatassa amhākaṁ, bodhisākhāpi dakkhiṇā;",
  "anya-e0703n14:106_0": "Imasmiṁyeva ṭhānamhi, patiṭṭhissati bhūmipa.",
  "anya-e0703n14:107_0": "36.",
  "anya-e0703n14:108_0": "Tato’gamā mahāthero, mahāmucalamālakaṁ;",
  "anya-e0703n14:109_0": "Tattakāneva pupphāni, tasmiṁ ṭhāne samokiri.",
  "anya-e0703n14:110_0": "37.",
  "anya-e0703n14:111_0": "Tathāpi puthavī kampi, puṭṭho tassā’ha kāraṇaṁ;",
  "anya-e0703n14:112_0": "Saṅghassu posathā gāraṁ, idha hessati bhūmipa.",
  "anya-e0703n14:113_0": "38.",
  "anya-e0703n14:114_0": "Pañhambamālakaṭṭhānaṁ, tato’gamā mahīpati;",
  "anya-e0703n14:115_0": "Supakkaṁ ambapakkañca, vaṇṇagandharasuttamaṁ.",
  "anya-e0703n14:116_0": "39.",
  "anya-e0703n14:117_0": "Mahantaṁ upanāmesi, rañño uyyānapālako;",
  "anya-e0703n14:118_0": "Taṁ therassupanāmesi, rājā atimanoramaṁ.",
  "anya-e0703n14:119_0": "40.",
  "anya-e0703n14:120_0": "Thero nisīdanākāraṁ, dassesi janatā hito;",
  "anya-e0703n14:121_0": "Attharāpesi tattheva, rājā attharaṇaṁ varaṁ.",
  "anya-e0703n14:122_0": "41.",
  "anya-e0703n14:123_0": "Adā tattha nisinnassa, therassambaṁ mahīpati;",
  "anya-e0703n14:124_0": "Thero taṁ paribhuñjitvā, ropanatthāya rājino.",
  "anya-e0703n14:125_0": "42.",
  "anya-e0703n14:126_0": "Ambaṭṭhikaṁ adā rājā, taṁ sayaṁ tattha ropayi;",
  "anya-e0703n14:127_0": "Hatthe tassoparithero, dhovi tassa viruḷhiyā.",
  "anya-e0703n14:128_0": "43.",
  "anya-e0703n14:129_0": "Taṁ khaṇaṁyeva bījamhā, tamhā nikkhamma aṅkuro;",
  "anya-e0703n14:130_0": "Kamenā’ti mahārukkho, pattapakkadharo ahu.",
  "anya-e0703n14:131_0": "44.",
  "anya-e0703n14:132_0": "Taṁ pāṭihāriyaṁ disvā, parisā sā sarājikā;",
  "anya-e0703n14:133_0": "Namassamānā aṭṭhāsi, there hatthatanuruhā.",
  "anya-e0703n14:134_0": "45.",
  "anya-e0703n14:135_0": "Thero tadā pupphamuṭṭhi, aṭṭha tattha samokiri;",
  "anya-e0703n14:136_0": "Tathāpi puthavīkampi, puṭṭho tassā’ha kāraṇaṁ.",
  "anya-e0703n14:137_0": "46.",
  "anya-e0703n14:138_0": "Saṅghassappannalābhānaṁ, anekesaṁ narādhipa;",
  "anya-e0703n14:139_0": "Saṅgammabhājanaṭhānaṁ, idaṁ ṭhānaṁ bhavissati.",
  "anya-e0703n14:140_0": "47.",
  "anya-e0703n14:141_0": "Tato gantvā catussāla-ṭhānaṁ tattha samokiri;",
  "anya-e0703n14:142_0": "Tattakāneva pupphāni, kampi tatthāpi medinī.",
  "anya-e0703n14:143_0": "48.",
  "anya-e0703n14:144_0": "Taṁ kampakāraṇaṁ pucchi, rājā thero viyākari;",
  "anya-e0703n14:145_0": "Tiṇṇannaṁ pubbabuddhānaṁ, rājuyyāna paṭiggahe.",
  "anya-e0703n14:146_0": "49.",
  "anya-e0703n14:147_0": "Dāna vatthunā’haṭāni, dīpavāsīhi sabbato;",
  "anya-e0703n14:148_0": "Idha ṭhapetvā bhojesuṁ, sasaṅghe sugate tayo.",
  "anya-e0703n14:149_0": "50.",
  "anya-e0703n14:150_0": "Idāni pana ettheva, catussālā bhavissati;",
  "anya-e0703n14:151_0": "Saṅghassa idha bhattaggaṁ, bhavissati narādhipa.",
  "anya-e0703n14:152_0": "51.",
  "anya-e0703n14:153_0": "Mahathūpaṭhitaṭhānaṁ, ṭhānāṭhānavidūtato;",
  "anya-e0703n14:154_0": "Agamāsi mahāthero, mahindo dīpadīpano.",
  "anya-e0703n14:155_0": "52.",
  "anya-e0703n14:156_0": "Tadā antoparikkhepe, rājuyyānassa khuddikā;",
  "anya-e0703n14:157_0": "Kakudhavhā ahu vāpī, tasso’pari jalantike.",
  "anya-e0703n14:158_0": "53.",
  "anya-e0703n14:159_0": "Thūpārahaṁ thalaṭhānaṁ, ahu there tahiṁ gate;",
  "anya-e0703n14:160_0": "Rañño campakapupphānaṁ, puṭakāna’ṭṭha āharuṁ.",
  "anya-e0703n14:161_0": "54.",
  "anya-e0703n14:162_0": "Tāni campakapupphāni, rājā therassu’pānayi;",
  "anya-e0703n14:163_0": "Thero campakapupphehi, tehi pūjesi taṁ phalaṁ.",
  "anya-e0703n14:164_0": "55.",
  "anya-e0703n14:165_0": "Tatthāpi puthavī kampi, rājā taṁ kampakāraṇaṁ;",
  "anya-e0703n14:166_0": "Pucchi thero’nu pubbena, āhataṁ kampakāraṇaṁ.",
  "anya-e0703n14:167_0": "56.",
  "anya-e0703n14:168_0": "Idaṁ ṭhānaṁ mahārāja, catubuddha nisevitaṁ;",
  "anya-e0703n14:169_0": "Thūpārahaṁ hitatthāya, sukhatthāya ca pāṇinaṁ.",
  "anya-e0703n14:170_0": "57.",
  "anya-e0703n14:171_0": "Imamhi kappe paṭhamaṁ, kakusandho jino ahu;",
  "anya-e0703n14:172_0": "Sabba dhammavidū satthā, sabbalokānukampako.",
  "anya-e0703n14:173_0": "58.",
  "anya-e0703n14:174_0": "Mahātitthavhayaṁ āsi, mahāmeghavanaṁ idaṁ;",
  "anya-e0703n14:175_0": "Nagaraṁ abhayaṁ nāma, puratthimadisāya’hu.",
  "anya-e0703n14:176_0": "59.",
  "anya-e0703n14:177_0": "Kadamba nadiyā pāre, tattha rājā’bhayo ahu;",
  "anya-e0703n14:178_0": "Ojadīpoti nāmena, ayaṁ dīpo tadāahu.",
  "anya-e0703n14:179_0": "60.",
  "anya-e0703n14:180_0": "Rakkhasehi janasse’ttha, rogo pajjarako ahu;",
  "anya-e0703n14:181_0": "Kakusandho dasabalo, disvāna tadupaddavaṁ.",
  "anya-e0703n14:182_0": "61.",
  "anya-e0703n14:183_0": "Taṁ gantvā sattavinayaṁ, pavattiṁ sāsanassa ca;",
  "anya-e0703n14:184_0": "Kātuṁ imasmiṁ dīpasmiṁ, karuṇā balacodito.",
  "anya-e0703n14:185_0": "62.",
  "anya-e0703n14:186_0": "Cattālīsasahassehi, tādīhi parivārito;",
  "anya-e0703n14:187_0": "Nabhasā’gamma aṭṭhāsi, devakūṭamhi pabbate.",
  "anya-e0703n14:188_0": "63.",
  "anya-e0703n14:189_0": "Sambuddhassā’nubhāvena, rogo pajjarako idha;",
  "anya-e0703n14:190_0": "Upasanto mahārāja, dīpamhi sakale tadā.",
  "anya-e0703n14:191_0": "64.",
  "anya-e0703n14:192_0": "Kattha ṭhito adhiṭṭhāsi, narissara munissaro;",
  "anya-e0703n14:193_0": "Sabbe maṁ ajja passantu, ojadīpamhi mānusā.",
  "anya-e0703n14:194_0": "65.",
  "anya-e0703n14:195_0": "Āgantukāmā sabbeva, manussā mama santikaṁ;",
  "anya-e0703n14:196_0": "Āgacchantu akicchena, khippañcāpi mahāmuni.",
  "anya-e0703n14:197_0": "66.",
  "anya-e0703n14:198_0": "Obhāsayantaṁ munindaṁ taṁ, obhāsantañca pabbataṁ;",
  "anya-e0703n14:199_0": "Rājā ca nāgarā ceva, disvā khippaṁ upāgamuṁ.",
  "anya-e0703n14:200_0": "67.",
  "anya-e0703n14:201_0": "Devatā balidānatthaṁ, manussā ca tahiṁ gatā;",
  "anya-e0703n14:202_0": "Devatā iti maññiṁsu, sasaṅghaṁ lokanāyakaṁ.",
  "anya-e0703n14:203_0": "68.",
  "anya-e0703n14:204_0": "Rājā so munirājaṁ taṁ, atihaṭṭho’bhi vādiya;",
  "anya-e0703n14:205_0": "Nimantayitvā bhattena, ānetvā purasanti kaṁ.",
  "anya-e0703n14:206_0": "69.",
  "anya-e0703n14:207_0": "Sasaṅghassa munindassa, nisajjārahamuttamaṁ;",
  "anya-e0703n14:208_0": "Ramaṇīyamidaṁ ṭhāna-masambādhanti cintiya.",
  "anya-e0703n14:209_0": "70.",
  "anya-e0703n14:210_0": "Kārite maṇḍape ramme, pallaṅkesu vare sutaṁ;",
  "anya-e0703n14:211_0": "Nisīdāpesi sambuddhaṁ, sasaṅghaṁ idha bhūpati.",
  "anya-e0703n14:212_0": "71.",
  "anya-e0703n14:213_0": "Nisinnampi ca passantā, sasaṅghaṁ lokanāyakaṁ;",
  "anya-e0703n14:214_0": "Dīpe manussā ānesuṁ, paṇṇākāre samantato.",
  "anya-e0703n14:215_0": "72.",
  "anya-e0703n14:216_0": "Attano khajjabhojjehi, tehi tehā’bhatehi ca;",
  "anya-e0703n14:217_0": "Santappesi sasaṅghaṁ taṁ, rājā so lokanāyakaṁ.",
  "anya-e0703n14:218_0": "73.",
  "anya-e0703n14:219_0": "Idheva pacchābhattaṁ taṁ, nisinnassa jinassa so;",
  "anya-e0703n14:220_0": "Mahā titthakamuyyānaṁ, rājā’dā dakkhiṇaṁ varaṁ.",
  "anya-e0703n14:221_0": "74.",
  "anya-e0703n14:222_0": "Akālapupphā laṅkāre, mahātitthavane tadā;",
  "anya-e0703n14:223_0": "Paṭiggahite buddhena, akampittha mahāmahī.",
  "anya-e0703n14:224_0": "75.",
  "anya-e0703n14:225_0": "Ettheva so nisīditvā, dhammaṁ desesi nāyako;",
  "anya-e0703n14:226_0": "Cattālīsa sahassāni, pattā maggaphalaṁ narā.",
  "anya-e0703n14:227_0": "76.",
  "anya-e0703n14:228_0": "Divāvihāraṁ katvāna, mahātitthavane jino;",
  "anya-e0703n14:229_0": "Sāyaṇhasamaye gantvā, bodhiṭhānārahaṁ mahi.",
  "anya-e0703n14:230_0": "77.",
  "anya-e0703n14:231_0": "Nisinno tattha appetvā, samādhiṁ vuṭṭhito tato;",
  "anya-e0703n14:232_0": "Iti cintayi sambuddho, hitatthaṁ dīpavāsinaṁ.",
  "anya-e0703n14:233_0": "78.",
  "anya-e0703n14:234_0": "Ādāya dakkhiṇaṁ sākhaṁ, bodhito me sirīsato;",
  "anya-e0703n14:235_0": "Āgacchatu rūpanandā, bhikkhunī sahabhikkhunī.",
  "anya-e0703n14:236_0": "79.",
  "anya-e0703n14:237_0": "Tassa taṁ cittamaññāya, sā therī tadanantaraṁ;",
  "anya-e0703n14:238_0": "Gahetvā tattha rājānaṁ, upasaṅkamma taṁ taruṁ.",
  "anya-e0703n14:239_0": "80.",
  "anya-e0703n14:240_0": "Lekhaṁ dakkhiṇasākhāya, dāpetvāna mahiddhikā;",
  "anya-e0703n14:241_0": "Manosilāya chinnaṁ taṁ, ṭhitaṁ hemakaṭāhake.",
  "anya-e0703n14:242_0": "81.",
  "anya-e0703n14:243_0": "Iddhiyā bodhimādāya, sapañcasata bhikkhunī;",
  "anya-e0703n14:244_0": "Idhā’netvā mahārāja, devatā parivāritā.",
  "anya-e0703n14:245_0": "82.",
  "anya-e0703n14:246_0": "Sasuvaṇṇa kaṭāhaṁ taṁ, sambuddhena pasārite;",
  "anya-e0703n14:247_0": "Ṭhapesi dakkhiṇe hatthe, taṁ gahetvā tathāgato.",
  "anya-e0703n14:248_0": "83.",
  "anya-e0703n14:249_0": "Patiṭṭhāpetuṁ pādāsi, bodhiṁ rañño’bhayassa taṁ;",
  "anya-e0703n14:250_0": "Mahātitthamhi uyyāne, patiṭṭhāpesi bhūpati.",
  "anya-e0703n14:251_0": "84.",
  "anya-e0703n14:252_0": "Tato gantvāna sambuddho,",
  "anya-e0703n14:253_0": "Ito uttarato pana;",
  "anya-e0703n14:254_0": "Sirīsamālake ramme,",
  "anya-e0703n14:255_0": "Nisīditvā tathāgato.",
  "anya-e0703n14:256_0": "85.",
  "anya-e0703n14:257_0": "Janassa dhammaṁ desesi, dhammābhisamayo tahiṁ;",
  "anya-e0703n14:258_0": "Vīsatiyā sahassānaṁ, pāṇānaṁ āsi bhūmipa.",
  "anya-e0703n14:259_0": "86.",
  "anya-e0703n14:260_0": "Tatopi uttaraṁ gantvā, thūparāmamahiṁ jino;",
  "anya-e0703n14:261_0": "Nisinno tattha appetvā, samādhiṁ vuṭṭhito tato.",
  "anya-e0703n14:262_0": "87.",
  "anya-e0703n14:263_0": "Dhammaṁ desesi sambuddho, parisāya tahiṁpana;",
  "anya-e0703n14:264_0": "Dasapāṇa sahassāni, pattamaggaphalāna’huṁ.",
  "anya-e0703n14:265_0": "88.",
  "anya-e0703n14:266_0": "Attano dhammakaraṇaṁ, manussānaṁ namassituṁ;",
  "anya-e0703n14:267_0": "Datvā saparivāraṁ taṁ, ṭhapetvā idha bhikkhuniṁ.",
  "anya-e0703n14:268_0": "89.",
  "anya-e0703n14:269_0": "Saha bhikkhusahassena, mahādevañca sāvakaṁ;",
  "anya-e0703n14:270_0": "Ṭhapetvā idha sambuddho, tato pācinato pana.",
  "anya-e0703n14:271_0": "90.",
  "anya-e0703n14:272_0": "Ṭhito ratanamālamhi, janaṁ samanusāsiya;",
  "anya-e0703n14:273_0": "Sasaṅgho nabhamuggantvā, jambudīpaṁ jino agā.",
  "anya-e0703n14:274_0": "91.",
  "anya-e0703n14:275_0": "Imamhi kappe dutiyaṁ, koṇāgamana nāyako;",
  "anya-e0703n14:276_0": "Ahu sabbavidū satthā, sabbalokānukampako.",
  "anya-e0703n14:277_0": "92.",
  "anya-e0703n14:278_0": "Mahānāmavhayaṁ āsi, mahāmeghavanaṁ idaṁ;",
  "anya-e0703n14:279_0": "Vaḍḍhamānapuraṁ nāma, dakkhiṇāya disāya’hu.",
  "anya-e0703n14:280_0": "93.",
  "anya-e0703n14:281_0": "Samiddho nāma nāmena, tattha rājā tadā ahu;",
  "anya-e0703n14:282_0": "Nāmena varadīpo’ti, ayaṁ dīpo tadā ahu.",
  "anya-e0703n14:283_0": "94.",
  "anya-e0703n14:284_0": "Dubbuṭṭhupaddavo ettha, varadīpe tadā ahu;",
  "anya-e0703n14:285_0": "Jino sakoṇāgamano, disvāna tadupaddavaṁ.",
  "anya-e0703n14:286_0": "95.",
  "anya-e0703n14:287_0": "Taṁ hutvā sattavinayaṁ, pavattiṁ sāsanassa ca;",
  "anya-e0703n14:288_0": "Kātuṁ imasmiṁ dīpasmīṁ, karuṇā balacodito.",
  "anya-e0703n14:289_0": "96.",
  "anya-e0703n14:290_0": "Tiṁsa bhikkhusahassehi, tādīhi parivārito;",
  "anya-e0703n14:291_0": "Nabhasā’gamma aṭṭhāsi, nabhe sumanakūṭake.",
  "anya-e0703n14:292_0": "97.",
  "anya-e0703n14:293_0": "Sambuddhassā’nubhāvena, dubbuṭṭhi sā khayaṁ gatā;",
  "anya-e0703n14:294_0": "Sāsanāntaradhānattā, suvuṭṭhi ca tadāahu.",
  "anya-e0703n14:295_0": "98.",
  "anya-e0703n14:296_0": "Tatta ṭhito adhiṭṭhāsi, narissaramunissaro;",
  "anya-e0703n14:297_0": "Sabbeva ajja passantu, varadīpamhi mānusā.",
  "anya-e0703n14:298_0": "99.",
  "anya-e0703n14:299_0": "Āgantukāmā sabbeva, manussā mama santikaṁ;",
  "anya-e0703n14:300_0": "Āgacchantu akicchena, khippañcā’ti mahāmuni.",
  "anya-e0703n14:301_0": "100.",
  "anya-e0703n14:302_0": "Mahāsattaṁ munindaṁ taṁ, obhāsantañca pabbataṁ;",
  "anya-e0703n14:303_0": "Rājā ca nāgarā ceva, disvā khippamupāgamuṁ.",
  "anya-e0703n14:304_0": "101.",
  "anya-e0703n14:305_0": "Devatābalidānatthaṁ , manussā ca tahiṁ gatā;",
  "anya-e0703n14:306_0": "Devatā iti maññiṁsu, sasaṅghaṁ lokanāyakaṁ.",
  "anya-e0703n14:307_0": "102.",
  "anya-e0703n14:308_0": "Rājā so munirājaṁ taṁ, atihaṭṭho’bhivādiya;",
  "anya-e0703n14:309_0": "Nimantayitvā bhattena, ānetvā purasantikaṁ.",
  "anya-e0703n14:310_0": "103.",
  "anya-e0703n14:311_0": "Sasaṅghassa munindassa, nisajjāraha muttamaṁ;",
  "anya-e0703n14:312_0": "Ramaṇīyamidaṁ ṭhānaṁ, asambādhanti cintiya.",
  "anya-e0703n14:313_0": "104.",
  "anya-e0703n14:314_0": "Kārite maṇḍape ramme, pallaṅkesu varesu taṁ;",
  "anya-e0703n14:315_0": "Nisīdāpayi sambuddhaṁ, sasaṅghaṁ idha bhūpati.",
  "anya-e0703n14:316_0": "105.",
  "anya-e0703n14:317_0": "Nisinnampi’dha passantā, sasaṅghaṁ lokanāyakaṁ;",
  "anya-e0703n14:318_0": "Dīpe manussā ānesuṁ, paṇṇākāre samantato.",
  "anya-e0703n14:319_0": "106.",
  "anya-e0703n14:320_0": "Attano khajjabhojjehi,",
  "anya-e0703n14:321_0": "Tehi tehā’bha tehi ca;",
  "anya-e0703n14:322_0": "Santappesi sasaṅghaṁ taṁ,",
  "anya-e0703n14:323_0": "Rājā so loka nāyakaṁ.",
  "anya-e0703n14:324_0": "107.",
  "anya-e0703n14:325_0": "Idheva pacchābhattaṁ taṁ, nisinnassa jinassa so;",
  "anya-e0703n14:326_0": "Mahānāmakamuyyānaṁ, rājā’dā dakkhiṇaṁ varaṁ.",
  "anya-e0703n14:327_0": "108.",
  "anya-e0703n14:328_0": "Akālapupphālaṅkāre, mahānāmavane tadā;",
  "anya-e0703n14:329_0": "Paṭiggahite buddhena, akampittha mahāmahī.",
  "anya-e0703n14:330_0": "109.",
  "anya-e0703n14:331_0": "Ettheva so nisīditvā, dhammaṁ desesi nāyako;",
  "anya-e0703n14:332_0": "Tadā tiṁsa sahassāni, pattā maggaphalaṁ narā.",
  "anya-e0703n14:333_0": "110.",
  "anya-e0703n14:334_0": "Divāvihāraṁ katvāna, mahānāmavane jino;",
  "anya-e0703n14:335_0": "Sāyaṇhasamaye gantvā, pubbadhodhiṭhitaṁ mahiṁ.",
  "anya-e0703n14:336_0": "111.",
  "anya-e0703n14:337_0": "Nisinno tattha appetvā, samādhiṁ vuṭṭhito tato;",
  "anya-e0703n14:338_0": "Iti cintesi sambuddho, hitatthaṁ dīpavāsinaṁ.",
  "anya-e0703n14:339_0": "112.",
  "anya-e0703n14:340_0": "Ādāya dakkhiṇaṁ sākhaṁ, mamodumbarabodhito;",
  "anya-e0703n14:341_0": "Āyātu kanakadattā, bhikkhunī sahabhikkhunī.",
  "anya-e0703n14:342_0": "113.",
  "anya-e0703n14:343_0": "Tassa taṁ cittamaññāya, sā therī tadanantaraṁ;",
  "anya-e0703n14:344_0": "Gahetvā tattha rājānaṁ, upasaṅkamma taṁ taruṁ.",
  "anya-e0703n14:345_0": "114.",
  "anya-e0703n14:346_0": "Lekhaṁ dakkhiṇasākhāya, dāpetvāna mahiddhikā;",
  "anya-e0703n14:347_0": "Manosilāya chinnaṁ taṁ, ṭhitaṁ hemakaṭāhake.",
  "anya-e0703n14:348_0": "115.",
  "anya-e0703n14:349_0": "Iddhiyā bodhimādāya, sapañcasahabhikkhunī;",
  "anya-e0703n14:350_0": "Idhāgantvā mahārāja, devatāparivāritā.",
  "anya-e0703n14:351_0": "116.",
  "anya-e0703n14:352_0": "Sasuvaṇṇakaṭāhaṁ taṁ, sambuddhena pasārite;",
  "anya-e0703n14:353_0": "Ṭhapesi dakkhiṇe hatthe, taṁ gahetvā tathāgato.",
  "anya-e0703n14:354_0": "117.",
  "anya-e0703n14:355_0": "Patiṭṭhāpetuṁ rañño’dā, samiddhassa sataṁ tahiṁ;",
  "anya-e0703n14:356_0": "Mahānāmamhi uyyāne, patiṭṭhāpesi bhūpati.",
  "anya-e0703n14:357_0": "118.",
  "anya-e0703n14:358_0": "Tato gantvāna sambuddho, sirīsamālakuttare;",
  "anya-e0703n14:359_0": "Janassa dhammaṁ desesi, nisinno nāgamālake.",
  "anya-e0703n14:360_0": "119.",
  "anya-e0703n14:361_0": "Taṁ dhammadesanaṁ sutvā, dhammābhisamayo tahiṁ;",
  "anya-e0703n14:362_0": "Vīsatiyā sahassānaṁ, pāṇānaṁ āsi bhūmipa.",
  "anya-e0703n14:363_0": "120.",
  "anya-e0703n14:364_0": "Pubbabuddhanisinnaṁ taṁ, ṭhānaṁ gantvā puruttaraṁ;",
  "anya-e0703n14:365_0": "Nisinno tattha appetvā, samādhiṁ vuṭṭhito tato.",
  "anya-e0703n14:366_0": "121.",
  "anya-e0703n14:367_0": "Dhammaṁ desesi sambuddho, parisāya tahiṁ pana;",
  "anya-e0703n14:368_0": "Dasapāṇasahassāni, pattā maggaphalaṁ ahuṁ.",
  "anya-e0703n14:369_0": "122.",
  "anya-e0703n14:370_0": "Kāyabandhanadhātuṁ so, manussehi namassituṁ;",
  "anya-e0703n14:371_0": "Datvā saparivāraṁ taṁ, ṭhapetvā idha bhikkhuniṁ.",
  "anya-e0703n14:372_0": "123.",
  "anya-e0703n14:373_0": "Saha bhikkhusahassena, mahāsummañca sāvakaṁ;",
  "anya-e0703n14:374_0": "Ṭhapetvā idha sambuddho, oraṁ ratanamālato.",
  "anya-e0703n14:375_0": "124.",
  "anya-e0703n14:376_0": "Ṭhapetvā sudassane māle, janaṁ samanusāsiya;",
  "anya-e0703n14:377_0": "Sasaṅgho nabhamuggamma, jambudīpaṁ jino agā.",
  "anya-e0703n14:378_0": "125.",
  "anya-e0703n14:379_0": "Imamhi kappe tatiyaṁ, kassapo gottato jino;",
  "anya-e0703n14:380_0": "Ahu sabbavidū satthā, sabbalokānukampako.",
  "anya-e0703n14:381_0": "126.",
  "anya-e0703n14:382_0": "Mahāmeghavanaṁ āsi, mahāsāgaranāmakaṁ;",
  "anya-e0703n14:383_0": "Visālaṁ nāma nagaraṁ, pacchimāya disāya’hu.",
  "anya-e0703n14:384_0": "127.",
  "anya-e0703n14:385_0": "Jayanto nāma nāmena, tattha rājā tadā ahu;",
  "anya-e0703n14:386_0": "Nāmena maṇḍadīpoti, ayaṁ dīpo tadā ahu.",
  "anya-e0703n14:387_0": "128.",
  "anya-e0703n14:388_0": "Tadā jayantarañño ca, rañño kaniṭṭhabhātu ca;",
  "anya-e0703n14:389_0": "Yuddhaṁ upaṭṭhitaṁ āsi, bhiṁsanaṁ sattahiṁsanaṁ.",
  "anya-e0703n14:390_0": "129.",
  "anya-e0703n14:391_0": "Kassapo so dasabalo, tena yuddhena pāṇinaṁ;",
  "anya-e0703n14:392_0": "Mahantaṁ byasanaṁ disvā, mahākāruṇiko muni.",
  "anya-e0703n14:393_0": "130.",
  "anya-e0703n14:394_0": "Taṁ hantvā sattavinayaṁ, pavattiṁ sāsanassa ca;",
  "anya-e0703n14:395_0": "Kātuṁ imasmiṁ dīpasmiṁ, karuṇābalacodito.",
  "anya-e0703n14:396_0": "131.",
  "anya-e0703n14:397_0": "Vīsatiyā sahassehi, tādīhi parivārito;",
  "anya-e0703n14:398_0": "Nabhasā’gamma aṭṭhāsi, subhakūṭamhi pabbate.",
  "anya-e0703n14:399_0": "132.",
  "anya-e0703n14:400_0": "Tatraṭhito adhiṭṭhāsi, narissara munissaro;",
  "anya-e0703n14:401_0": "‘‘Sabbe maṁ ajja passantu, maṇḍadīpamhi mānusā.",
  "anya-e0703n14:402_0": "133.",
  "anya-e0703n14:403_0": "Āgantukāmā sabbeva, mānusā mama santikaṁ;",
  "anya-e0703n14:404_0": "Āgacchantu akicchena, khippañcā’ti mahāmuni.",
  "anya-e0703n14:405_0": "134.",
  "anya-e0703n14:406_0": "Obhāsantaṁ munindaṁ taṁ, obhāsantañca pabbakaṁ;",
  "anya-e0703n14:407_0": "Rājā ca nāgarā ceva, disvā khippaṁ upāgamuṁ.",
  "anya-e0703n14:408_0": "135.",
  "anya-e0703n14:409_0": "Attano attano patta-vijayāya janā bahū;",
  "anya-e0703n14:410_0": "Devatā balidānatthaṁ, taṁ pabbatamupāgatā.",
  "anya-e0703n14:411_0": "136.",
  "anya-e0703n14:412_0": "Devatā iti maññiṁsu, sasaṅghaṁ lokanāyakaṁ;",
  "anya-e0703n14:413_0": "Rājā ca so kumāro ca, yuddhamujjhiṁsu vimhitā.",
  "anya-e0703n14:414_0": "137.",
  "anya-e0703n14:415_0": "Rājā so munirājaṁ taṁ, atihaṭṭho’bhivādiya;",
  "anya-e0703n14:416_0": "Nimantayitvā bhattena, ānetvā purasantikaṁ.",
  "anya-e0703n14:417_0": "138.",
  "anya-e0703n14:418_0": "Sasaṅghassa munindassa, nisajjārahamuttamaṁ;",
  "anya-e0703n14:419_0": "Ramaṇīyamidaṁ ṭhāna-masambādhanti cintiya.",
  "anya-e0703n14:420_0": "139.",
  "anya-e0703n14:421_0": "Kārite maṇḍape ramme, pallaṅkesu varesu taṁ;",
  "anya-e0703n14:422_0": "Nisīdāpesi sambuddhaṁ, sasaṅghaṁ idha bhūpati.",
  "anya-e0703n14:423_0": "140.",
  "anya-e0703n14:424_0": "Nisinnampidha passantā, sasaṅghaṁ lokanāyakaṁ;",
  "anya-e0703n14:425_0": "Dīpe manussā ānesuṁ, paṇṇākāre samantato.",
  "anya-e0703n14:426_0": "141.",
  "anya-e0703n14:427_0": "Attano khajjabhojjehi, tehi tehā’bhatehi ca;",
  "anya-e0703n14:428_0": "Sasantappesi sasaṅghaṁ taṁ, rājā so lokanāyakaṁ.",
  "anya-e0703n14:429_0": "142.",
  "anya-e0703n14:430_0": "Idhe’va pacchābhattaṁ taṁ, nisinnassa jinassa so;",
  "anya-e0703n14:431_0": "Mahāsāgaramuyyānaṁ, rājā’dā dakkhiṇaṁ varaṁ.",
  "anya-e0703n14:432_0": "143.",
  "anya-e0703n14:433_0": "Akālapupphalaṅkāre , mahāsāgarakānane;",
  "anya-e0703n14:434_0": "Paṭiggahite buddhena, akampittha mahāmahī.",
  "anya-e0703n14:435_0": "144.",
  "anya-e0703n14:436_0": "Ettheva so nisīditvā, dhammaṁ desesi nāyako;",
  "anya-e0703n14:437_0": "Tadā vīsaṁ sahassāni, sotāpattiphalaṁ narā.",
  "anya-e0703n14:438_0": "145.",
  "anya-e0703n14:439_0": "Divā vihāraṁ katvāna, mahāsāgarakānane;",
  "anya-e0703n14:440_0": "Sāyanhe sugato gantvā, pubbabodhiṭṭhitaṁ mahiṁ.",
  "anya-e0703n14:441_0": "146.",
  "anya-e0703n14:442_0": "Nisinno tattha appetvā, samādhiṁ vuṭṭhito tato;",
  "anya-e0703n14:443_0": "Iti cintesi sambuddho, hitatthaṁ dīpavāsinaṁ.",
  "anya-e0703n14:444_0": "147.",
  "anya-e0703n14:445_0": "Ādāya dakkhiṇaṁ sākhaṁ, mama nigrodhabodhito;",
  "anya-e0703n14:446_0": "Sudhammā bhikkhunī etu, idāni sahabhikkhunī.",
  "anya-e0703n14:447_0": "148.",
  "anya-e0703n14:448_0": "Tassa taṁ cittamaññāya, sā therī tadanantaraṁ;",
  "anya-e0703n14:449_0": "Gahetvā tattha rājānaṁ, upasaṅkamma taṁ taruṁ.",
  "anya-e0703n14:450_0": "149.",
  "anya-e0703n14:451_0": "Lekhaṁ dakkhiṇasākhāya, dāpetvāna mahiddhikā;",
  "anya-e0703n14:452_0": "Manosilāya chinnaṁ taṁ, ṭhitaṁ hemakaṭāyake.",
  "anya-e0703n14:453_0": "150.",
  "anya-e0703n14:454_0": "Iddhiyā bodhimādāya, sapañcasatabhikkhunī;",
  "anya-e0703n14:455_0": "Idhānetvā mahārāja, devatāparivāritā.",
  "anya-e0703n14:456_0": "151.",
  "anya-e0703n14:457_0": "Sasuvaṇṇakaṭāhaṁ taṁ, sambuddhena pasārite;",
  "anya-e0703n14:458_0": "Ṭhapesi dakkhiṇe hatthe, taṁ gahetvā tathāgato.",
  "anya-e0703n14:459_0": "152.",
  "anya-e0703n14:460_0": "Patiṭṭhāpetuṁ rañño’dā, jayantassa sataṁ tahiṁ;",
  "anya-e0703n14:461_0": "Mahāsāgaramuyyāne, patiṭṭhāpesi bhūpati.",
  "anya-e0703n14:462_0": "153.",
  "anya-e0703n14:463_0": "Tato gantvāna sambuddho, nāgamāḷakauttare;",
  "anya-e0703n14:464_0": "Dhanassa dhammaṁ desesi, nisinno’sokamāḷake.",
  "anya-e0703n14:465_0": "154.",
  "anya-e0703n14:466_0": "Taṁ dhammadesanaṁ sutvā, dhammābhisamayo tahiṁ;",
  "anya-e0703n14:467_0": "Ahu pāṇasahassānaṁ, catunnaṁ manujādhipa.",
  "anya-e0703n14:468_0": "155.",
  "anya-e0703n14:469_0": "Pubbabuddhanisitaṁ taṁ, ṭhānaṁ gantvā punuttaraṁ;",
  "anya-e0703n14:470_0": "Nisinno tattha appetvā, samādhiṁ vuṭṭhito tato.",
  "anya-e0703n14:471_0": "156.",
  "anya-e0703n14:472_0": "Dhammaṁ desesi sambuddho, parisāya tahiṁ pana;",
  "anya-e0703n14:473_0": "Dasapāṇasahassāni, pattamaggaphalāna’huṁ.",
  "anya-e0703n14:474_0": "157.",
  "anya-e0703n14:475_0": "Jalasāṭikadhātuṁ so, manassehi namassituṁ;",
  "anya-e0703n14:476_0": "Datvā saparivāraṁ taṁ; Ṭhapetvā idha bhikkhunī.",
  "anya-e0703n14:477_0": "158.",
  "anya-e0703n14:478_0": "Saha bhikkhusahassena, sabbanandiñca sāvakaṁ;",
  "anya-e0703n14:479_0": "Ṭhapetvā nadīto oraṁ, so sudassanamāḷato.",
  "anya-e0703n14:480_0": "159.",
  "anya-e0703n14:481_0": "Somanasse māḷakasmiṁ, janaṁ samanusāsiya;",
  "anya-e0703n14:482_0": "Saṅghena nabhamuggantvā, jambudīpaṁ jino agā.",
  "anya-e0703n14:483_0": "160.",
  "anya-e0703n14:484_0": "Ahu imasmiṁ kappasmiṁ, catutthaṁ gotamo jino;",
  "anya-e0703n14:485_0": "Sabbadhammavidū satthā, sabbalokānukampako.",
  "anya-e0703n14:486_0": "161.",
  "anya-e0703n14:487_0": "Paṭhamaṁ so idhāgantvā, yakkhaniddhamanaṁ akā;",
  "anya-e0703n14:488_0": "Dutiyaṁ punarāgamma, nāgānaṁ damanaṁ akā.",
  "anya-e0703n14:489_0": "162.",
  "anya-e0703n14:490_0": "Kalyāṇiyaṁ maṇiakkhi nāgenā’bhinimantito;",
  "anya-e0703n14:491_0": "Tatiyaṁ punarāgamma, sasaṅgho tattha bhuñjiya.",
  "anya-e0703n14:492_0": "163.",
  "anya-e0703n14:493_0": "Pubbabodhiṭhitaṭhānaṁ, thūpaṭhānamidampi ca;",
  "anya-e0703n14:494_0": "Paribhogadhātuṭhānañca, nisajjāyo’pabhuñjiya.",
  "anya-e0703n14:495_0": "164.",
  "anya-e0703n14:496_0": "Pubbabuddhaṭhitaṭṭhānā, oraṁ gantvā mahāmuni;",
  "anya-e0703n14:497_0": "Laṁkādīpe lokadīpo, manussābhāvato tadā.",
  "anya-e0703n14:498_0": "165.",
  "anya-e0703n14:499_0": "Dīpaṭṭhaṁ devasaṅghañca, nāge samanusāsiya;",
  "anya-e0703n14:500_0": "Sasaṅgho nabhamuggantvā, jambudīpaṁ jino agā.",
  "anya-e0703n14:501_0": "166.",
  "anya-e0703n14:502_0": "Evaṁ ṭhānamidaṁ rāja, catubuddhanisevitaṁ;",
  "anya-e0703n14:503_0": "Tasmiṁ ṭhāne mahārāja, thūpo hessati’nāgate.",
  "anya-e0703n14:504_0": "167.",
  "anya-e0703n14:505_0": "Buddhasārīradhātūnaṁ, doṇadhātunidhānavā;",
  "anya-e0703n14:506_0": "Vīsaṁhatthasataṁ ucco, hemamālī’ti vissuto.",
  "anya-e0703n14:507_0": "168.",
  "anya-e0703n14:508_0": "Ahameva kāressāmi, icchāha puthavissaro;",
  "anya-e0703n14:509_0": "Idha aññāni kiccāni, bahūni tava bhūmipa.",
  "anya-e0703n14:510_0": "169.",
  "anya-e0703n14:511_0": "Tāni kārehi nattāte, kāressati imaṁ pana;",
  "anya-e0703n14:512_0": "Mahānāgassa te bhātu, uparājassa atrajo.",
  "anya-e0703n14:513_0": "170.",
  "anya-e0703n14:514_0": "So yaṭṭhālayatissoti, rājā hessata’nāgate;",
  "anya-e0703n14:515_0": "Rājā goṭṭhābhayo nāma, tassa putto bhavissati.",
  "anya-e0703n14:516_0": "171.",
  "anya-e0703n14:517_0": "Tassa putto kākavaṇṇa-tisso nāma bhavissati;",
  "anya-e0703n14:518_0": "Tassa rañño suto rāja, mahārājā bhavissati.",
  "anya-e0703n14:519_0": "172.",
  "anya-e0703n14:520_0": "Duṭṭhagāmaṇisaddena, pākaṭo’bhayanāmako;",
  "anya-e0703n14:521_0": "Kāressatī’dha thūpaṁ so, mahā tejiddhivikkamo.",
  "anya-e0703n14:522_0": "173.",
  "anya-e0703n14:523_0": "Iccāha thero therassa, vacane ne’ttha bhūpati;",
  "anya-e0703n14:524_0": "Ussāpesi silāthambhaṁ, taṁ pavattiṁ likhāpiya.",
  "anya-e0703n14:525_0": "174.",
  "anya-e0703n14:526_0": "Rammaṁ mahāmeghavanaṁ, tissārāmaṁ mahāmahī;",
  "anya-e0703n14:527_0": "Mahāmahindathero so, paṭiggayha mahiddhiko.",
  "anya-e0703n14:528_0": "175.",
  "anya-e0703n14:529_0": "Akampo kampayitvāna, mahiṁ ṭhānesu aṭṭhasu;",
  "anya-e0703n14:530_0": "Piṇḍāya pavisitvāna, nagaraṁ sāgarūpamaṁ.",
  "anya-e0703n14:531_0": "176.",
  "anya-e0703n14:532_0": "Rañño ghare bhattakiccaṁ, katvā nikkhamma mandiraṁ;",
  "anya-e0703n14:533_0": "Nisajja nandanavane, aggikkhandhopamaṁ tahiṁ.",
  "anya-e0703n14:534_0": "177.",
  "anya-e0703n14:535_0": "Suttaṁ janassa desetvā, sahassaṁ mānuse tahiṁ;",
  "anya-e0703n14:536_0": "Pāpayitvā maggaphalaṁ, mahāmeghavane vasi.",
  "anya-e0703n14:537_0": "178.",
  "anya-e0703n14:538_0": "Tatiye divase thero, rājagehamhi bhuñjiya;",
  "anya-e0703n14:539_0": "Nisajja nandanavane, desiyā’sivisopamaṁ.",
  "anya-e0703n14:540_0": "179.",
  "anya-e0703n14:541_0": "Pāpayitvā’bhisamayaṁ, sahassapurise tato;",
  "anya-e0703n14:542_0": "Tissārāmaṁ agā thero, rājā ca sutadesano.",
  "anya-e0703n14:543_0": "180.",
  "anya-e0703n14:544_0": "Theraṁ upanisīditvā, so pucchi jinasāsanaṁ;",
  "anya-e0703n14:545_0": "Patiṭṭhitannu bhante’ti, na tāva manujā’dhipa.",
  "anya-e0703n14:546_0": "181.",
  "anya-e0703n14:547_0": "Uposathādikammatthaṁ, jinā’ṇāya janādhipa;",
  "anya-e0703n14:548_0": "Sīmāya idha baddhāya, patiṭṭhissati sāsanaṁ.",
  "anya-e0703n14:549_0": "182.",
  "anya-e0703n14:550_0": "Icca’bravi mahāthero, taṁ rājā idamabravi;",
  "anya-e0703n14:551_0": "Sambuddhā’ṇāya antohaṁ, vassissāmi jutindhara.",
  "anya-e0703n14:552_0": "183.",
  "anya-e0703n14:553_0": "Tasmā katvā puraṁ anto-sīmaṁ bandhatha sajjukaṁ;",
  "anya-e0703n14:554_0": "Iccā’bravi mahārājā, thero taṁ idhamabravi.",
  "anya-e0703n14:555_0": "184.",
  "anya-e0703n14:556_0": "Evaṁ sati tuvaṁyeva, pajāna puthavissara;",
  "anya-e0703n14:557_0": "Sīmāya gamanaṭṭhānaṁ, bandhissāma mayaṁ hitaṁ.",
  "anya-e0703n14:558_0": "185.",
  "anya-e0703n14:559_0": "‘‘Sādhū’’ti vatvā bhūmindo, devindo viya nandanā;",
  "anya-e0703n14:560_0": "Mahāmeghavanārammā, pāvisi mandiraṁ sakaṁ.",
  "anya-e0703n14:561_0": "186.",
  "anya-e0703n14:562_0": "Catutthe divase thero, rañño gehamhi bhuñjiya;",
  "anya-e0703n14:563_0": "Nisajja nandanavane, desesa’namanaggiyaṁ.",
  "anya-e0703n14:564_0": "187.",
  "anya-e0703n14:565_0": "Pāyetvā’matapānaṁ so, sahassapurise tahiṁ;",
  "anya-e0703n14:566_0": "Mahāmeghavanārāmaṁ, mahāthero upāgami.",
  "anya-e0703n14:567_0": "188.",
  "anya-e0703n14:568_0": "Pāto bheriṁ carāpetvā, maṇḍayitvā puraṁ varaṁ;",
  "anya-e0703n14:569_0": "Vihāragāmimaggañca, vihārañca samantato.",
  "anya-e0703n14:570_0": "189.",
  "anya-e0703n14:571_0": "Rathesabho rathaṭṭho so, sabbālaṅkārabhūsito;",
  "anya-e0703n14:572_0": "Sahāmacco sahorodho, sayoggabalavāhano.",
  "anya-e0703n14:573_0": "190.",
  "anya-e0703n14:574_0": "Mahatā parivārena, sakārāmamupāgami;",
  "anya-e0703n14:575_0": "Tattha there upagantvā, vanditvā vandanārahe.",
  "anya-e0703n14:576_0": "191.",
  "anya-e0703n14:577_0": "Saha therehi gantvāna, nadiyo’parititthakaṁ;",
  "anya-e0703n14:578_0": "Tato kasanto agami, hemanaṅgalamādiya.",
  "anya-e0703n14:579_0": "192.",
  "anya-e0703n14:580_0": "Mahāpadumo kuñjaro ca, ubho nāgā sumaṅgalā;",
  "anya-e0703n14:581_0": "Suvaṇṇanaṅgale yuttā, paṭhame kuntamāḷake.",
  "anya-e0703n14:582_0": "193.",
  "anya-e0703n14:583_0": "Caturaṅgamahā seno, saha therehi khattiyo;",
  "anya-e0703n14:584_0": "Gahetvā naṅgalaṁ sītaṁ, dassayitvā arindamo.",
  "anya-e0703n14:585_0": "194.",
  "anya-e0703n14:586_0": "Samalaṅkataṁ puṇṇaghaṭaṁ, nānārāgaṁ dhajaṁ subhaṁ;",
  "anya-e0703n14:587_0": "Pātiṁ candanacuṇṇañca, soṇṇarajata daṇḍakaṁ.",
  "anya-e0703n14:588_0": "195.",
  "anya-e0703n14:589_0": "Ādāsaṁ pupphabharitaṁ, samuggaṁ kusumagghiyaṁ;",
  "anya-e0703n14:590_0": "Toraṇakadalīchattādiṁ, gahititthi parivārito.",
  "anya-e0703n14:591_0": "196.",
  "anya-e0703n14:592_0": "Nānāturiya saṅghuṭṭho, balogha parivārito;",
  "anya-e0703n14:593_0": "Thutimaṅgalagītehi, pūrayanto catuddisaṁ.",
  "anya-e0703n14:594_0": "197.",
  "anya-e0703n14:595_0": "Sādhukāra ninādeti, celukkhepasatehi ca;",
  "anya-e0703n14:596_0": "Mahatā chaṇapujāya, kasanto bhūmipo agā.",
  "anya-e0703n14:597_0": "198.",
  "anya-e0703n14:598_0": "Vihārañca purañceva, kurumāno padakkhiṇaṁ;",
  "anya-e0703n14:599_0": "Sīmāya gamanaṭhānaṁ, nadiṁ patvā samāpayi.",
  "anya-e0703n14:600_0": "199.",
  "anya-e0703n14:601_0": "Kenakena nimittena, sīmā ettha gatāti ce;",
  "anya-e0703n14:602_0": "Evaṁ sīmāgataṭhānaṁ, icchamānā nibodhatha.",
  "anya-e0703n14:603_0": "200.",
  "anya-e0703n14:604_0": "Najjāpāsāṇatitthamhi , pāsāṇe kuḍḍavāṭakaṁ;",
  "anya-e0703n14:605_0": "Tato kumbalavāṭaṁ taṁ, mahānipaṁ tato agā.",
  "anya-e0703n14:606_0": "201.",
  "anya-e0703n14:607_0": "Tato kukudhapāḷiṅgo, mahāaṅgaṇago tato;",
  "anya-e0703n14:608_0": "Tato khujjamadhulañca, maruttapokkharaṇiṁtato.",
  "anya-e0703n14:609_0": "202.",
  "anya-e0703n14:610_0": "Vijayārāma uyyāne, uttaradvārakoṭṭha go;",
  "anya-e0703n14:611_0": "Gajakumbhaka pāsāṇaṁ, thusavaṭṭhika majjhago.",
  "anya-e0703n14:612_0": "203.",
  "anya-e0703n14:613_0": "Abhaye balākapāsāṇaṁ, mahāsusāna majjhago;",
  "anya-e0703n14:614_0": "Dīghapāsāṇakaṁ gantvā, kammāradeva gāmato.",
  "anya-e0703n14:615_0": "204.",
  "anya-e0703n14:616_0": "Nigrodha maṅgaṇaṁ gantvā, hiyagallasamīpake;",
  "anya-e0703n14:617_0": "Diyāvasabrāhmaṇassa, devokaṁ pubbadakkhiṇaṁ.",
  "anya-e0703n14:618_0": "205.",
  "anya-e0703n14:619_0": "Tato telumapāliṅgo,",
  "anya-e0703n14:620_0": "Tato tālacatukkago;",
  "anya-e0703n14:621_0": "Assamaṇḍalavāmena,",
  "anya-e0703n14:622_0": "Dve kadambā ajāyisuṁ.",
  "anya-e0703n14:623_0": "206.",
  "anya-e0703n14:624_0": "Tato marumbatittaṅgo, tato uddhaṁ nidiṁ agā;",
  "anya-e0703n14:625_0": "Paṭhama cetiya pācine, dve kadambā ajāyisuṁ.",
  "anya-e0703n14:626_0": "207.",
  "anya-e0703n14:627_0": "Senindaguttarajjamhi, damiḷā dakasuddhikā;",
  "anya-e0703n14:628_0": "Nadiṁ dūranti bandhitvā, nagarāsannamakaṁsu taṁ.",
  "anya-e0703n14:629_0": "208.",
  "anya-e0703n14:630_0": "Jīva mānakadambañca, antosīmagataṁ ahu;",
  "anya-e0703n14:631_0": "Mataka dambatīrena, sīmāuddakadambagā.",
  "anya-e0703n14:632_0": "209.",
  "anya-e0703n14:633_0": "Sīhasinā natitthena, uggantvā tīrato vajaṁ;",
  "anya-e0703n14:634_0": "Pāsāṇatitthaṁ gantvāna, nimittaṁ ghaṭṭayi isi.",
  "anya-e0703n14:635_0": "210.",
  "anya-e0703n14:636_0": "Nimittetu pane’tasmiṁ, ghaṭṭite devamānusā;",
  "anya-e0703n14:637_0": "Sādhukāraṁ pavattesuṁ, sāsanaṁ suppatiṭṭhitaṁ.",
  "anya-e0703n14:638_0": "211.",
  "anya-e0703n14:639_0": "Rañño dinnāya sītāya, nimitte parikittayi;",
  "anya-e0703n14:640_0": "Dvattiṁsamāḷakatthañca, thūpārāmatthameva ca.",
  "anya-e0703n14:641_0": "212.",
  "anya-e0703n14:642_0": "Nimitte kittayitvāna, mahāthero mahāmati;",
  "anya-e0703n14:643_0": "Sīmantaranimitte ca, kittayitvā yathāvidhiṁ.",
  "anya-e0703n14:644_0": "213.",
  "anya-e0703n14:645_0": "Abandhī sabbā sīmāyo, tasmiṁyeva dinevasī;",
  "anya-e0703n14:646_0": "Mahāmahī akampittha, sīmābandhe samāpite.",
  "anya-e0703n14:647_0": "214.",
  "anya-e0703n14:648_0": "Pañcame divase thero, rañño gehamhi bhuñjiya;",
  "anya-e0703n14:649_0": "Nisajja nandanavane, suttantaṁ khajjanīyakaṁ.",
  "anya-e0703n14:650_0": "215.",
  "anya-e0703n14:651_0": "Mahājanassa desetvā, sahassaṁ mānuse tahiṁ;",
  "anya-e0703n14:652_0": "Pāyetvā amataṁ pānaṁ, mahāmeghavane vasī.",
  "anya-e0703n14:653_0": "216.",
  "anya-e0703n14:654_0": "Chaṭṭhepi divase thero, raññogehamhi bhuñjiya;",
  "anya-e0703n14:655_0": "Nisajja nandanavane, sutta gomaya piṇḍikaṁ.",
  "anya-e0703n14:656_0": "217.",
  "anya-e0703n14:657_0": "Desayitvā desanaññū, mahassaṁyeva mānuse;",
  "anya-e0703n14:658_0": "Pāpayitvā’bhisamayaṁ, mahā meghavane vasī.",
  "anya-e0703n14:659_0": "218.",
  "anya-e0703n14:660_0": "Sattamepi dine thero, rājagehamhi bhuñjiya;",
  "anya-e0703n14:661_0": "Nisajja nandanavane, dhammacakkappavattanaṁ.",
  "anya-e0703n14:662_0": "219.",
  "anya-e0703n14:663_0": "Suttantaṁ desayitvāna, sahassaṁyeva mānuse;",
  "anya-e0703n14:664_0": "Pāpayitvā’bhisamayaṁ, mahā meghavane vasi.",
  "anya-e0703n14:665_0": "220.",
  "anya-e0703n14:666_0": "Evañhi aṭṭha navama-sahassāni jutindharo;",
  "anya-e0703n14:667_0": "Kārayitvā’bhisamayaṁ, divaseheva sattati.",
  "anya-e0703n14:668_0": "221.",
  "anya-e0703n14:669_0": "Taṁ mahānandanavanaṁ, vuccate tena tādinā;",
  "anya-e0703n14:670_0": "Sāsanajotitaṭṭhāna-mīti jotivanaṁ iti.",
  "anya-e0703n14:671_0": "222.",
  "anya-e0703n14:672_0": "Tissarāmamhi kāresi,",
  "anya-e0703n14:673_0": "Rājā therassa ādito;",
  "anya-e0703n14:674_0": "Pāsādaṁ sīghamukkāya,",
  "anya-e0703n14:675_0": "Sukkhā petvāna mattikā.",
  "anya-e0703n14:676_0": "223.",
  "anya-e0703n14:677_0": "Pāsādo kāḷakābhāso,",
  "anya-e0703n14:678_0": "Āsi so tena taṁ tahiṁ;",
  "anya-e0703n14:679_0": "Kāḷapāsāda pariveṇa-mīti saṅkhamupāgataṁ.",
  "anya-e0703n14:680_0": "224.",
  "anya-e0703n14:681_0": "Tato mahābodhigharaṁ, lohapāsāda meva ca;",
  "anya-e0703n14:682_0": "Salākaggañca kāresi, bhattasālañca sādhukaṁ.",
  "anya-e0703n14:683_0": "225.",
  "anya-e0703n14:684_0": "Bahūni pariveṇāni, sādhu pokkharaṇīpi ca;",
  "anya-e0703n14:685_0": "Rattiṭhāna divāṭhāna-pabhutīni ca kārayi.",
  "anya-e0703n14:686_0": "226.",
  "anya-e0703n14:687_0": "Tassa nahānapāpassa, nhānapokkharaṇītaṭe;",
  "anya-e0703n14:688_0": "Sunahātapariveṇanti, pariveṇaṁ pavuccati.",
  "anya-e0703n14:689_0": "227.",
  "anya-e0703n14:690_0": "Tassa caṅkamitaṭhāne, dīpa dīpassa sādhuno;",
  "anya-e0703n14:691_0": "Vuccate pariveṇaṁ taṁ, dīghacaṅkamanaṁ iti.",
  "anya-e0703n14:692_0": "228.",
  "anya-e0703n14:693_0": "Aggaphalasamāpattiṁ, samāpajja yahiṁ tuso;",
  "anya-e0703n14:694_0": "Phalagga pariveṇanti, etaṁ tena pavuccati.",
  "anya-e0703n14:695_0": "229.",
  "anya-e0703n14:696_0": "Apassiya apassenaṁ, thero tattha nisīdiso;",
  "anya-e0703n14:697_0": "Therā passaya pariveṇaṁ, etaṁ tena pavuccati.",
  "anya-e0703n14:698_0": "230.",
  "anya-e0703n14:699_0": "Bahū marugaṇā yattha, upāsiṁsu upaccataṁ;",
  "anya-e0703n14:700_0": "Teneva taṁ marugaṇa-pariveṇanti vuccati.",
  "anya-e0703n14:701_0": "231.",
  "anya-e0703n14:702_0": "Senāpatitassa rañño, therassa dīghasandako;",
  "anya-e0703n14:703_0": "Kāresi cūḷapāsādaṁ, mahāthambhehi aṭṭhahi.",
  "anya-e0703n14:704_0": "232.",
  "anya-e0703n14:705_0": "Dīghasanda senāpati-pariveṇanti taṁ tahiṁ;",
  "anya-e0703n14:706_0": "Vuccate pariveṇaṁ taṁ, pamukhaṁ pamukhākaraṁ.",
  "anya-e0703n14:707_0": "233.",
  "anya-e0703n14:708_0": "Devānaṁpiyavacano’paguḷanāmo,",
  "anya-e0703n14:709_0": "Laṁkāyaṁ paṭhamamimaṁ mahāvihāraṁ;",
  "anya-e0703n14:710_0": "Rājā so sumatimahāmahindatheraṁ,",
  "anya-e0703n14:711_0": "Āgammā malamatimetthakārayitthāti.",
  "anya-e0703n14:712_0": "Sujanappasāda saṁvegatthāya kate mahāvaṁse",
  "anya-e0703n14:713_0": "Mahāvihārapaṭiggahako nāma",
  "anya-e0703n14:714_0": "Pannarasamo paricchedo."
}