{
  "tha-ap254:0.1_0": "Therāpadāna",
  "tha-ap254:0.2_0": "Thomakavagga",
  "tha-ap254:0.3_0": "2. Ekāsanadāyakattheraapadāna",
  "tha-ap254:1.1_0": "“Vijahitvā devavaṇṇaṁ,",
  "tha-ap254:1.2_0": "sabhariyo idhāgamiṁ;",
  "tha-ap254:1.3_0": "Adhikāraṁ kattukāmo,",
  "tha-ap254:1.4_0": "buddhaseṭṭhassa sāsane.",
  "tha-ap254:2.1_0": "Devalo nāma nāmena,",
  "tha-ap254:2.2_0": "padumuttarasāvako;",
  "tha-ap254:2.3_0": "Tassa bhikkhā mayā dinnā,",
  "tha-ap254:2.4_0": "vippasannena cetasā.",
  "tha-ap254:3.1_0": "Satasahassito kappe,",
  "tha-ap254:3.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap254:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap254:3.4_0": "piṇḍapātassidaṁ phalaṁ.",
  "tha-ap254:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap254:4.2_0": "…pe…",
  "tha-ap254:4.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap254:5.1_0": "Itthaṁ sudaṁ āyasmā ekāsanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap254:6.1_0": "Ekāsanadāyakattherassāpadānaṁ dutiyaṁ."
}