{
  "thag2.36:0.1_0": "Theragāthā",
  "thag2.36:0.2_0": "Dukanipāta",
  "thag2.36:0.3_0": "Catutthavagga",
  "thag2.36:0.4_0": "2.36 Nitakattheragāthā",
  "thag2.36:1.1_0": "“Kassa selūpamaṁ cittaṁ,",
  "thag2.36:1.2_0": "ṭhitaṁ nānupakampati;",
  "thag2.36:1.3_0": "Virattaṁ rajanīyesu,",
  "thag2.36:1.4_0": "kuppanīye na kuppati;",
  "thag2.36:1.5_0": "Yassevaṁ bhāvitaṁ cittaṁ,",
  "thag2.36:1.6_0": "kuto taṁ dukkhamessati.",
  "thag2.36:2.1_0": "Mama selūpamaṁ cittaṁ,",
  "thag2.36:2.2_0": "ṭhitaṁ nānupakampati;",
  "thag2.36:2.3_0": "Virattaṁ rajanīyesu,",
  "thag2.36:2.4_0": "kuppanīye na kuppati;",
  "thag2.36:2.5_0": "Mamevaṁ bhāvitaṁ cittaṁ,",
  "thag2.36:2.6_0": "kuto maṁ dukkhamessatī”ti.",
  "thag2.36:2.7_0": "… Nitako thero …."
}