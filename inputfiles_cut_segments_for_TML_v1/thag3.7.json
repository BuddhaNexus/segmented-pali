{
  "thag3.7:0.1_0": "Theragāthā",
  "thag3.7:0.2_0": "Tikanipāta",
  "thag3.7:0.3_0": "Paṭhamavagga",
  "thag3.7:0.4_0": "3.7. Vāraṇattheragāthā",
  "thag3.7:1.1_0": "“Yodha koci manussesu,",
  "thag3.7:1.2_0": "parapāṇāni hiṁsati;",
  "thag3.7:1.3_0": "Asmā lokā paramhā ca,",
  "thag3.7:1.4_0": "ubhayā dhaṁsate naro.",
  "thag3.7:2.1_0": "Yo ca mettena cittena,",
  "thag3.7:2.2_0": "sabbapāṇānukampati;",
  "thag3.7:2.3_0": "Bahuñhi so pasavati,",
  "thag3.7:2.4_0": "puññaṁ tādisako naro.",
  "thag3.7:3.1_0": "Subhāsitassa sikkhetha,",
  "thag3.7:3.2_0": "samaṇūpāsanassa ca;",
  "thag3.7:3.3_0": "Ekāsanassa ca raho,",
  "thag3.7:3.4_0": "cittavūpasamassa cā”ti.",
  "thag3.7:3.5_0": "… Vāraṇo thero …."
}