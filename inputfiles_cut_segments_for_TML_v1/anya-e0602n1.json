{
  "anya-e0602n1:0_0": "Tigumbacetiya thomanā",
  "anya-e0602n1:1_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n1:2_0": "1.",
  "anya-e0602n1:3_0": "Yo dīpaṅkaramūlamhi, padaṁ hattagataṁ caji;",
  "anya-e0602n1:4_0": "Sammāsambodhi mākaṅkhaṁ, vande tassa siroruhaṁ.",
  "anya-e0602n1:5_0": "(Pathyāvattagāthā).",
  "anya-e0602n1:6_0": "2.",
  "anya-e0602n1:7_0": "Pūretvā bodhisambhāra-mahesaṁ yo anuttaraṁ;",
  "anya-e0602n1:8_0": "Alattha buddhattaṁ tassa, kesadhātuvaraṁ name.",
  "anya-e0602n1:9_0": "(Pathyāvattagāthā).",
  "anya-e0602n1:10_0": "3.",
  "anya-e0602n1:11_0": "Laddhā buddhattaṁ chaṭhāna-matikkamma pavedayi;",
  "anya-e0602n1:12_0": "Vimuttiṁ rājāyatane, tassa kesavaraṁ name.",
  "anya-e0602n1:13_0": "(Rakāra bhakāravipulā pathyāvattagāthā).",
  "anya-e0602n1:14_0": "4.",
  "anya-e0602n1:15_0": "Tattha sakkadattiyampi, nāgalataṁ harītakaṁ;",
  "anya-e0602n1:16_0": "Anotattodakaṁ bhuñji, vande tassa siroruhaṁ.",
  "anya-e0602n1:17_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n1:18_0": "5.",
  "anya-e0602n1:19_0": "Tadā muggaselapattaṁ, mahārājūhi dinnakaṁ;",
  "anya-e0602n1:20_0": "Tathāgato paṭiggaṇhi, vandāmi tassa sīsajaṁ.",
  "anya-e0602n1:21_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n1:22_0": "6.",
  "anya-e0602n1:23_0": "Tadā dvinnaṁ dvebhātika-janehi madhupiṇḍikaṁ;",
  "anya-e0602n1:24_0": "Paribhuñjesi manthampi, tassa sīsasiriṁ name.",
  "anya-e0602n1:25_0": "(Takāravipulā pathyāvattagāthā).",
  "anya-e0602n1:26_0": "7.",
  "anya-e0602n1:27_0": "Yo tapussabhallikānaṁ, tadā dvisaraṇaṁ adā;",
  "anya-e0602n1:28_0": "Lokamhi sabbapaṭhamaṁ, tassa sīrivahaṁ name.",
  "anya-e0602n1:29_0": "(Rakāra nakāra vipulāpathyāvattagāthā).",
  "anya-e0602n1:30_0": "8.",
  "anya-e0602n1:31_0": "Tadā tatthupaṭṭhakānaṁ, tesaṁ kese adā aṭha;",
  "anya-e0602n1:32_0": "Lokahita mapekkhanto, nātho yo tassa te name.",
  "anya-e0602n1:33_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n1:34_0": "9.",
  "anya-e0602n1:35_0": "Tepi taṁ āhāritvāna, pokkharabbatiyaṁ karuṁ;",
  "anya-e0602n1:36_0": "Sajīvakesa cetiyaṁ, nametaṁ sabbapubbakaṁ.",
  "anya-e0602n1:37_0": "(Makāravipulā pathyāvattagāthā).",
  "anya-e0602n1:38_0": "10.",
  "anya-e0602n1:39_0": "Uposathuposathamhi, muñcantaṁ nīlarasmiyo;",
  "anya-e0602n1:40_0": "Bhagavāva lokaatthaṁ, karontaṁ taṁ sadā name.",
  "anya-e0602n1:41_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n1:42_0": "11.",
  "anya-e0602n1:43_0": "Cūḷāmaṇidussacetyaṁ , kālamhi bodhisattake;",
  "anya-e0602n1:44_0": "Buddhakāle idaṁ sabba-paṭhamaṁ taṁ namāmahaṁ.",
  "anya-e0602n1:45_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n1:46_0": "12.",
  "anya-e0602n1:47_0": "Namāmahaṁ vandāmahaṁ, pūjemahaṁ siroruhaṁ;",
  "anya-e0602n1:48_0": "Puññamidaṁ bhavatu me, paccayo āsavakkhaye.",
  "anya-e0602n1:49_0": "(Takāra nakāravipulā pathyāvattagāthā).",
  "anya-e0602n1:50_0": "Tigumbacetiyathomanā niṭṭhitā."
}