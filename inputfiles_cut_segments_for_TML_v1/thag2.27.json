{
  "thag2.27:0.1_0": "Theragāthā",
  "thag2.27:0.2_0": "Dukanipāta",
  "thag2.27:0.3_0": "Tatiyavagga",
  "thag2.27:0.4_0": "2.27. Nandakattheragāthā",
  "thag2.27:1.1_0": "“Yathāpi bhaddo ājañño,",
  "thag2.27:1.2_0": "khalitvā patitiṭṭhati;",
  "thag2.27:1.3_0": "Bhiyyo laddhāna saṁvegaṁ,",
  "thag2.27:1.4_0": "adīno vahate dhuraṁ.",
  "thag2.27:2.1_0": "Evaṁ dassanasampannaṁ,",
  "thag2.27:2.2_0": "sammāsambuddhasāvakaṁ;",
  "thag2.27:2.3_0": "Ājānīyaṁ maṁ dhāretha,",
  "thag2.27:2.4_0": "puttaṁ buddhassa orasan”ti.",
  "thag2.27:2.5_0": "… Nandako thero …."
}