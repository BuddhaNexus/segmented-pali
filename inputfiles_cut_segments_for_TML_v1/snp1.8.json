{
  "snp1.8:0.1_0": "Sutta Nipāta 1.8",
  "snp1.8:0.2_0": "Mettasutta",
  "snp1.8:1.1_0": "“Karaṇīyamatthakusalena,",
  "snp1.8:1.2_0": "Yanta santaṁ padaṁ abhisamecca;",
  "snp1.8:1.3_0": "Sakko ujū ca suhujū ca,",
  "snp1.8:1.4_0": "Sūvaco cassa mudu anatimānī.",
  "snp1.8:2.1_0": "Santussako ca subharo ca,",
  "snp1.8:2.2_0": "Appakicco ca sallahukavutti;",
  "snp1.8:2.3_0": "Santindriyo ca nipako ca,",
  "snp1.8:2.4_0": "Appagabbho kulesvananugiddho.",
  "snp1.8:3.1_0": "Na ca khuddamācare kiñci,",
  "snp1.8:3.2_0": "Yena viññū pare upavadeyyuṁ;",
  "snp1.8:3.3_0": "Sukhino va khemino hontu,",
  "snp1.8:3.4_0": "Sabbasattā bhavantu sukhitattā.",
  "snp1.8:4.1_0": "Ye keci pāṇabhūtatthi,",
  "snp1.8:4.2_0": "Tasā vā thāvarā vanavasesā;",
  "snp1.8:4.3_0": "Dīghā vā ye va mahantā,",
  "snp1.8:4.4_0": "Majjhimā rassakā aṇukathūlā.",
  "snp1.8:5.1_0": "Diṭṭhā vā ye va adiṭṭhā,",
  "snp1.8:5.2_0": "Ye va dūre vasanti avidūre;",
  "snp1.8:5.3_0": "Bhūtā va sambhavesī va,",
  "snp1.8:5.4_0": "Sabbasattā bhavantu sukhitattā.",
  "snp1.8:6.1_0": "Na paro paraṁ nikubbetha,",
  "snp1.8:6.2_0": "Nātimaññetha katthaci na kañci;",
  "snp1.8:6.3_0": "Byārosanā paṭighasañña,",
  "snp1.8:6.4_0": "Nāññamaññassa dukkhamiccheyya.",
  "snp1.8:7.1_0": "Mātā yathā niyaṁ puttam",
  "snp1.8:7.2_0": "Āyusā ekaputtamanurakkhe;",
  "snp1.8:7.3_0": "Evampi sabbabhūtesu,",
  "snp1.8:7.4_0": "Mānasaṁ bhāvaye aparimāṇaṁ.",
  "snp1.8:8.1_0": "Mettañca sabbalokasmi,",
  "snp1.8:8.2_0": "Mānasaṁ bhāvaye aparimāṇaṁ;",
  "snp1.8:8.3_0": "Uddhaṁ adho ca tiriyañca,",
  "snp1.8:8.4_0": "Asambādhaṁ averamasapattaṁ.",
  "snp1.8:9.1_0": "Tiṭṭhaṁ caraṁ nisinno va,",
  "snp1.8:9.2_0": "Sayāno yāvatāssa vitamiddho;",
  "snp1.8:9.3_0": "Etaṁ satiṁ adhiṭṭheyya,",
  "snp1.8:9.4_0": "Brahmametaṁ vihāramidhamāhu.",
  "snp1.8:10.1_0": "Diṭṭhiñca anupaggamma,",
  "snp1.8:10.2_0": "Sīlavā dassanena sampanno;",
  "snp1.8:10.3_0": "Kāmesu vinaya gedhaṁ,",
  "snp1.8:10.4_0": "Na hi jātuggabbhaseyya punaretī”ti.",
  "snp1.8:10.5_0": "Mettasuttaṁ aṭṭhamaṁ."
}