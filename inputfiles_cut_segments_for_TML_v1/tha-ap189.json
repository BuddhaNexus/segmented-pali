{
  "tha-ap189:0.1_0": "Therāpadāna",
  "tha-ap189:0.2_0": "Kuṭajapupphiyavagga",
  "tha-ap189:0.3_0": "7. Ekacintikattheraapadāna",
  "tha-ap189:1.1_0": "“Yadā devo devakāyā,",
  "tha-ap189:1.2_0": "cavate āyusaṅkhayā;",
  "tha-ap189:1.3_0": "Tayo saddā niccharanti,",
  "tha-ap189:1.4_0": "devānaṁ anumodataṁ.",
  "tha-ap189:2.1_0": "‘Ito bho sugatiṁ gaccha,",
  "tha-ap189:2.2_0": "manussānaṁ sahabyataṁ;",
  "tha-ap189:2.3_0": "Manussabhūto saddhamme,",
  "tha-ap189:2.4_0": "labha saddhaṁ anuttaraṁ.",
  "tha-ap189:3.1_0": "Sā te saddhā niviṭṭhāssa,",
  "tha-ap189:3.2_0": "mūlajātā patiṭṭhitā;",
  "tha-ap189:3.3_0": "Yāvajīvaṁ asaṁhīrā,",
  "tha-ap189:3.4_0": "saddhamme suppavedite.",
  "tha-ap189:4.1_0": "Kāyena kusalaṁ katvā,",
  "tha-ap189:4.2_0": "vācāya kusalaṁ bahuṁ;",
  "tha-ap189:4.3_0": "Manasā kusalaṁ katvā,",
  "tha-ap189:4.4_0": "abyāpajjaṁ nirūpadhiṁ.",
  "tha-ap189:5.1_0": "Tato opadhikaṁ puññaṁ,",
  "tha-ap189:5.2_0": "katvā dānena taṁ bahuṁ;",
  "tha-ap189:5.3_0": "Aññepi macce saddhamme,",
  "tha-ap189:5.4_0": "brahmacariye nivesaya’.",
  "tha-ap189:6.1_0": "Imāya anukampāya,",
  "tha-ap189:6.2_0": "devā devaṁ yadā vidū;",
  "tha-ap189:6.3_0": "Cavantaṁ anumodanti,",
  "tha-ap189:6.4_0": "ehi deva punappunaṁ.",
  "tha-ap189:7.1_0": "Saṁvego me tadā āsi,",
  "tha-ap189:7.2_0": "devasaṅghe samāgate;",
  "tha-ap189:7.3_0": "Kaṁ su nāma ahaṁ yoniṁ,",
  "tha-ap189:7.4_0": "gamissāmi ito cuto.",
  "tha-ap189:8.1_0": "Mama saṁvegamaññāya,",
  "tha-ap189:8.2_0": "samaṇo bhāvitindriyo;",
  "tha-ap189:8.3_0": "Mamuddharitukāmo so,",
  "tha-ap189:8.4_0": "āgacchi mama santikaṁ.",
  "tha-ap189:9.1_0": "Sumano nāma nāmena,",
  "tha-ap189:9.2_0": "padumuttarasāvako;",
  "tha-ap189:9.3_0": "Atthadhammānusāsitvā,",
  "tha-ap189:9.4_0": "saṁvejesi mamaṁ tadā.",
  "tha-ap189:10.1_0": "Tassāhaṁ vacanaṁ sutvā,",
  "tha-ap189:10.2_0": "buddhe cittaṁ pasādayiṁ;",
  "tha-ap189:10.3_0": "Taṁ dhīraṁ abhivādetvā,",
  "tha-ap189:10.4_0": "tattha kālaṅkato ahaṁ.",
  "tha-ap189:11.1_0": "Upapajjiṁ sa tattheva,",
  "tha-ap189:11.2_0": "sukkamūlena codito;",
  "tha-ap189:11.3_0": "Kappānaṁ satasahassaṁ,",
  "tha-ap189:11.4_0": "duggatiṁ nupapajjahaṁ.",
  "tha-ap189:12.1_0": "Paṭisambhidā catasso,",
  "tha-ap189:12.2_0": "…pe…",
  "tha-ap189:12.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap189:13.1_0": "Itthaṁ sudaṁ āyasmā ekacintiko thero imā gāthāyo abhāsitthāti.",
  "tha-ap189:14.1_0": "Ekacintikattherassāpadānaṁ sattamaṁ."
}