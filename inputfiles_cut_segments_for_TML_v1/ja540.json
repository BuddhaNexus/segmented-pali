{
  "ja540:0.1_0": "Jātaka",
  "ja540:0.2_0": "Mahānipāta",
  "ja540:0.3_0": "Mūgapakkhavagga",
  "ja540:0.4_0": "3 Suvaṇṇasāmajātaka",
  "ja540:1.1_0": "“Ko nu maṁ usunā vijjhi,",
  "ja540:1.2_0": "pamattaṁ udahārakaṁ;",
  "ja540:1.3_0": "Khattiyo brāhmaṇo vesso,",
  "ja540:1.4_0": "ko maṁ viddhā nilīyasi.",
  "ja540:2.1_0": "Na me maṁsāni khajjāni,",
  "ja540:2.2_0": "Cammenattho na vijjati;",
  "ja540:2.3_0": "Atha kena nu vaṇṇena,",
  "ja540:2.4_0": "Viddheyyaṁ maṁ amaññatha.",
  "ja540:3.1_0": "Ko vā tvaṁ kassa vā putto,",
  "ja540:3.2_0": "kathaṁ jānemu taṁ mayaṁ;",
  "ja540:3.3_0": "Puṭṭho me samma akkhāhi,",
  "ja540:3.4_0": "kiṁ maṁ viddhā nilīyasi”.",
  "ja540:4.1_0": "“Rājāhamasmi kāsīnaṁ,",
  "ja540:4.2_0": "pīḷiyakkhoti maṁ vidū;",
  "ja540:4.3_0": "Lobhā raṭṭhaṁ pahitvāna,",
  "ja540:4.4_0": "migamesaṁ carāmahaṁ.",
  "ja540:5.1_0": "Issatthe casmi kusalo,",
  "ja540:5.2_0": "daḷhadhammoti vissuto;",
  "ja540:5.3_0": "Nāgopi me na mucceyya,",
  "ja540:5.4_0": "āgato usupātanaṁ.",
  "ja540:6.1_0": "Ko vā tvaṁ kassa vā putto,",
  "ja540:6.2_0": "kathaṁ jānemu taṁ mayaṁ;",
  "ja540:6.3_0": "Pituno attano cāpi,",
  "ja540:6.4_0": "nāmagottaṁ pavedaya”.",
  "ja540:7.1_0": "“Nesādaputto bhaddante,",
  "ja540:7.2_0": "sāmo iti maṁ ñātayo;",
  "ja540:7.3_0": "Āmantayiṁsu jīvantaṁ,",
  "ja540:7.4_0": "svajjevāhaṁ gato saye.",
  "ja540:8.1_0": "Viddhosmi puthusallena,",
  "ja540:8.2_0": "savisena yathā migo;",
  "ja540:8.3_0": "Sakamhi lohite rāja,",
  "ja540:8.4_0": "passa semi paripluto.",
  "ja540:9.1_0": "Paṭivāmagataṁ sallaṁ,",
  "ja540:9.2_0": "passa dhimhāmi lohitaṁ;",
  "ja540:9.3_0": "Āturo tyānupucchāmi,",
  "ja540:9.4_0": "kiṁ maṁ viddhā nilīyasi.",
  "ja540:10.1_0": "Ajinamhi haññate dīpi,",
  "ja540:10.2_0": "nāgo dantehi haññate;",
  "ja540:10.3_0": "Atha kena nu vaṇṇena,",
  "ja540:10.4_0": "viddheyyaṁ maṁ amaññatha”.",
  "ja540:11.1_0": "“Migo upaṭṭhito āsi,",
  "ja540:11.2_0": "āgato usupātanaṁ;",
  "ja540:11.3_0": "Taṁ disvā ubbijī sāma,",
  "ja540:11.4_0": "tena kodho mamāvisi”.",
  "ja540:12.1_0": "“Yato sarāmi attānaṁ,",
  "ja540:12.2_0": "yato pattosmi viññutaṁ;",
  "ja540:12.3_0": "Na maṁ migā uttasanti,",
  "ja540:12.4_0": "araññe sāpadānipi.",
  "ja540:13.1_0": "Yato nidhiṁ parihariṁ,",
  "ja540:13.2_0": "yato pattosmi yobbanaṁ;",
  "ja540:13.3_0": "Na maṁ migā uttasanti,",
  "ja540:13.4_0": "araññe sāpadānipi.",
  "ja540:14.1_0": "Bhīrū kimpurisā rāja,",
  "ja540:14.2_0": "pabbate gandhamādane;",
  "ja540:14.3_0": "Sammodamānā gacchāma,",
  "ja540:14.4_0": "pabbatāni vanāni ca.",
  "ja540:15.1_0": "Na maṁ migā uttasanti,",
  "ja540:15.2_0": "araññe sāpadānipi;",
  "ja540:15.3_0": "Atha kena nu vaṇṇena,",
  "ja540:15.4_0": "utrāsanti migā mamaṁ”.",
  "ja540:16.1_0": "“Na taṁ tasa migo sāma,",
  "ja540:16.2_0": "kiṁ tāhaṁ alikaṁ bhaṇe;",
  "ja540:16.3_0": "Kodhalobhābhibhūtāhaṁ,",
  "ja540:16.4_0": "usuṁ te taṁ avassajiṁ.",
  "ja540:17.1_0": "Kuto nu sāma āgamma,",
  "ja540:17.2_0": "kassa vā pahito tuvaṁ;",
  "ja540:17.3_0": "Udahāro nadiṁ gaccha,",
  "ja540:17.4_0": "āgato migasammataṁ”.",
  "ja540:18.1_0": "“Andhā mātāpitā mayhaṁ,",
  "ja540:18.2_0": "te bharāmi brahāvane;",
  "ja540:18.3_0": "Tesāhaṁ udakāhāro,",
  "ja540:18.4_0": "āgato migasammataṁ.",
  "ja540:19.1_0": "Atthi nesaṁ usāmattaṁ,",
  "ja540:19.2_0": "atha sāhassa jīvitaṁ;",
  "ja540:19.3_0": "Udakassa alābhena,",
  "ja540:19.4_0": "maññe andhā marissare.",
  "ja540:20.1_0": "Na me idaṁ tathā dukkhaṁ,",
  "ja540:20.2_0": "labbhā hi pumunā idaṁ;",
  "ja540:20.3_0": "Yañca ammaṁ na passāmi,",
  "ja540:20.4_0": "taṁ me dukkhataraṁ ito.",
  "ja540:21.1_0": "Na me idaṁ tathā dukkhaṁ,",
  "ja540:21.2_0": "labbhā hi pumunā idaṁ;",
  "ja540:21.3_0": "Yañca tātaṁ na passāmi,",
  "ja540:21.4_0": "taṁ me dukkhataraṁ ito.",
  "ja540:22.1_0": "Sā nūna kapaṇā ammā,",
  "ja540:22.2_0": "cirarattāya rucchati;",
  "ja540:22.3_0": "Aḍḍharatte va ratte vā,",
  "ja540:22.4_0": "nadīva avasucchati.",
  "ja540:23.1_0": "So nūna kapaṇo tāto,",
  "ja540:23.2_0": "cirarattāya rucchati;",
  "ja540:23.3_0": "Aḍḍharatte va ratte vā,",
  "ja540:23.4_0": "nadīva avasucchati.",
  "ja540:24.1_0": "Uṭṭhānapādacariyāya,",
  "ja540:24.2_0": "pādasambāhanassa ca;",
  "ja540:24.3_0": "Sāma tāta vilapantā,",
  "ja540:24.4_0": "hiṇḍissanti brahāvane.",
  "ja540:25.1_0": "Idampi dutiyaṁ sallaṁ,",
  "ja540:25.2_0": "kampeti hadayaṁ mamaṁ;",
  "ja540:25.3_0": "Yañca andhe na passāmi,",
  "ja540:25.4_0": "maññe hissāmi jīvitaṁ”.",
  "ja540:26.1_0": "“Mā bāḷhaṁ paridevesi,",
  "ja540:26.2_0": "sāma kalyāṇadassana;",
  "ja540:26.3_0": "Ahaṁ kammakaro hutvā,",
  "ja540:26.4_0": "bharissaṁ te brahāvane.",
  "ja540:27.1_0": "Issatthe casmi kusalo,",
  "ja540:27.2_0": "daḷhadhammoti vissuto;",
  "ja540:27.3_0": "Ahaṁ kammakaro hutvā,",
  "ja540:27.4_0": "bharissaṁ te brahāvane.",
  "ja540:28.1_0": "Migānaṁ vighāsamanvesaṁ,",
  "ja540:28.2_0": "Vanamūlaphalāni ca;",
  "ja540:28.3_0": "Ahaṁ kammakaro hutvā,",
  "ja540:28.4_0": "Bharissaṁ te brahāvane.",
  "ja540:29.1_0": "Katamaṁ taṁ vanaṁ sāma,",
  "ja540:29.2_0": "yattha mātāpitā tava;",
  "ja540:29.3_0": "Ahaṁ te tathā bharissaṁ,",
  "ja540:29.4_0": "yathā te abharī tuvaṁ”.",
  "ja540:30.1_0": "“Ayaṁ ekapadī rāja,",
  "ja540:30.2_0": "yoyaṁ ussīsake mama;",
  "ja540:30.3_0": "Ito gantvā aḍḍhakosaṁ,",
  "ja540:30.4_0": "tattha nesaṁ agārakaṁ;",
  "ja540:30.5_0": "Yattha mātāpitā mayhaṁ,",
  "ja540:30.6_0": "te bharassu ito gato.",
  "ja540:31.1_0": "Namo te kāsirājatthu,",
  "ja540:31.2_0": "namo te kāsivaḍḍhana;",
  "ja540:31.3_0": "Andhā mātāpitā mayhaṁ,",
  "ja540:31.4_0": "te bharassu brahāvane.",
  "ja540:32.1_0": "Añjaliṁ te paggaṇhāmi,",
  "ja540:32.2_0": "kāsirāja namatthu te;",
  "ja540:32.3_0": "Mātaraṁ pitaraṁ mayhaṁ,",
  "ja540:32.4_0": "vutto vajjāsi vandanaṁ”.",
  "ja540:33.1_0": "Idaṁ vatvāna so sāmo,",
  "ja540:33.2_0": "yuvā kalyāṇadassano;",
  "ja540:33.3_0": "Mucchito visavegena,",
  "ja540:33.4_0": "visaññī samapajjatha.",
  "ja540:34.1_0": "Sa rājā paridevesi,",
  "ja540:34.2_0": "bahuṁ kāruññasañhitaṁ;",
  "ja540:34.3_0": "“Ajarāmarohaṁ āsiṁ,",
  "ja540:34.4_0": "ajjetaṁ ñāmi no pure;",
  "ja540:34.5_0": "Sāmaṁ kālaṅkataṁ disvā,",
  "ja540:34.6_0": "natthi maccussa nāgamo.",
  "ja540:35.1_0": "Yassu maṁ paṭimanteti,",
  "ja540:35.2_0": "savisena samappito;",
  "ja540:35.3_0": "Svajja evaṁ gate kāle,",
  "ja540:35.4_0": "na kiñci mabhibhāsati.",
  "ja540:36.1_0": "Nirayaṁ nūna gacchāmi,",
  "ja540:36.2_0": "ettha me natthi saṁsayo;",
  "ja540:36.3_0": "Tadā hi pakataṁ pāpaṁ,",
  "ja540:36.4_0": "cirarattāya kibbisaṁ.",
  "ja540:37.1_0": "Bhavanti tassa vattāro,",
  "ja540:37.2_0": "gāme kibbisakārako;",
  "ja540:37.3_0": "Araññe nimmanussamhi,",
  "ja540:37.4_0": "ko maṁ vattumarahati.",
  "ja540:38.1_0": "Sārayanti hi kammāni,",
  "ja540:38.2_0": "gāme saṅgaccha māṇavā;",
  "ja540:38.3_0": "Araññe nimmanussamhi,",
  "ja540:38.4_0": "ko nu maṁ sārayissati”.",
  "ja540:39.1_0": "Sā devatā antarahitā,",
  "ja540:39.2_0": "pabbate gandhamādane;",
  "ja540:39.3_0": "Raññova anukampāya,",
  "ja540:39.4_0": "imā gāthā abhāsatha.",
  "ja540:40.1_0": "“Āguṁ kira mahārāja,",
  "ja540:40.2_0": "akari kamma dukkaṭaṁ;",
  "ja540:40.3_0": "Adūsakā pitāputtā,",
  "ja540:40.4_0": "tayo ekūsunā hatā.",
  "ja540:41.1_0": "Ehi taṁ anusikkhāmi,",
  "ja540:41.2_0": "yathā te sugatī siyā;",
  "ja540:41.3_0": "Dhammenandhe vane posa,",
  "ja540:41.4_0": "maññehaṁ sugatī tayā”.",
  "ja540:42.1_0": "Sa rājā paridevitvā,",
  "ja540:42.2_0": "bahuṁ kāruññasañhitaṁ;",
  "ja540:42.3_0": "Udakakumbhamādāya,",
  "ja540:42.4_0": "pakkāmi dakkhiṇāmukho.",
  "ja540:43.1_0": "“Kassa nu eso padasaddo,",
  "ja540:43.2_0": "manussasseva āgato;",
  "ja540:43.3_0": "Neso sāmassa nigghoso,",
  "ja540:43.4_0": "ko nu tvamasi mārisa.",
  "ja540:44.1_0": "Santañhi sāmo vajati,",
  "ja540:44.2_0": "santaṁ pādāni neyati;",
  "ja540:44.3_0": "Neso sāmassa nigghoso,",
  "ja540:44.4_0": "ko nu tvamasi mārisa”.",
  "ja540:45.1_0": "“Rājāhamasmi kāsīnaṁ,",
  "ja540:45.2_0": "pīḷiyakkhoti maṁ vidū;",
  "ja540:45.3_0": "Lobhā raṭṭhaṁ pahitvāna,",
  "ja540:45.4_0": "migamesaṁ carāmahaṁ.",
  "ja540:46.1_0": "Issatthe casmi kusalo,",
  "ja540:46.2_0": "daḷhadhammoti vissuto;",
  "ja540:46.3_0": "Nāgopi me na mucceyya,",
  "ja540:46.4_0": "āgato usupātanaṁ”.",
  "ja540:47.1_0": "“Svāgataṁ te mahārāja,",
  "ja540:47.2_0": "atho te adurāgataṁ;",
  "ja540:47.3_0": "Issarosi anuppatto,",
  "ja540:47.4_0": "yaṁ idhatthi pavedaya.",
  "ja540:48.1_0": "Tindukāni piyālāni,",
  "ja540:48.2_0": "madhuke kāsumāriyo;",
  "ja540:48.3_0": "Phalāni khuddakappāni,",
  "ja540:48.4_0": "bhuñja rāja varaṁ varaṁ.",
  "ja540:49.1_0": "Idampi pānīyaṁ sītaṁ,",
  "ja540:49.2_0": "ābhataṁ girigabbharā;",
  "ja540:49.3_0": "Tato piva mahārāja,",
  "ja540:49.4_0": "sace tvaṁ abhikaṅkhasi”.",
  "ja540:50.1_0": "“Nālaṁ andhā vane daṭṭhuṁ,",
  "ja540:50.2_0": "ko nu vo phalamāhari;",
  "ja540:50.3_0": "Anandhassevayaṁ sammā,",
  "ja540:50.4_0": "nivāpo mayha khāyati”.",
  "ja540:51.1_0": "“Daharo yuvā nātibrahā,",
  "ja540:51.2_0": "sāmo kalyāṇadassano;",
  "ja540:51.3_0": "Dīghassa kesā asitā,",
  "ja540:51.4_0": "atho sūnaggavellitā.",
  "ja540:52.1_0": "So have phalamāharitvā,",
  "ja540:52.2_0": "ito ādāya kamaṇḍaluṁ;",
  "ja540:52.3_0": "Nadiṁ gato udahāro,",
  "ja540:52.4_0": "maññe na dūramāgato”.",
  "ja540:53.1_0": "“Ahaṁ taṁ avadhiṁ sāmaṁ,",
  "ja540:53.2_0": "yo tuyhaṁ paricārako;",
  "ja540:53.3_0": "Yaṁ kumāraṁ pavedetha,",
  "ja540:53.4_0": "sāmaṁ kalyāṇadassanaṁ.",
  "ja540:54.1_0": "Dīghassa kesā asitā,",
  "ja540:54.2_0": "atho sūnaggavellitā;",
  "ja540:54.3_0": "Tesu lohitalittesu,",
  "ja540:54.4_0": "seti sāmo mayā hato”.",
  "ja540:55.1_0": "“Kena dukūla mantesi,",
  "ja540:55.2_0": "hato sāmoti vādinā;",
  "ja540:55.3_0": "Hato sāmoti sutvāna,",
  "ja540:55.4_0": "hadayaṁ me pavedhati.",
  "ja540:56.1_0": "Assatthasseva taruṇaṁ,",
  "ja540:56.2_0": "pavāḷaṁ māluteritaṁ;",
  "ja540:56.3_0": "Hato sāmoti sutvāna,",
  "ja540:56.4_0": "hadayaṁ me pavedhati”.",
  "ja540:57.1_0": "“Pārike kāsirājāyaṁ,",
  "ja540:57.2_0": "so sāmaṁ migasammate;",
  "ja540:57.3_0": "Kodhasā usunā vijjhi,",
  "ja540:57.4_0": "tassa mā pāpamicchimhā”.",
  "ja540:58.1_0": "“Kicchā laddho piyo putto,",
  "ja540:58.2_0": "yo andhe abharī vane;",
  "ja540:58.3_0": "Taṁ ekaputtaṁ ghātimhi,",
  "ja540:58.4_0": "kathaṁ cittaṁ na kopaye”.",
  "ja540:59.1_0": "“Kicchā laddho piyo putto,",
  "ja540:59.2_0": "yo andhe abharī vane;",
  "ja540:59.3_0": "Taṁ ekaputtaṁ ghātimhi,",
  "ja540:59.4_0": "akkodhaṁ āhu paṇḍitā”.",
  "ja540:60.1_0": "“Mā bāḷhaṁ paridevetha,",
  "ja540:60.2_0": "hato sāmoti vādinā;",
  "ja540:60.3_0": "Ahaṁ kammakaro hutvā,",
  "ja540:60.4_0": "bharissāmi brahāvane.",
  "ja540:61.1_0": "Issatthe casmi kusalo,",
  "ja540:61.2_0": "daḷhadhammoti vissuto;",
  "ja540:61.3_0": "Ahaṁ kammakaro hutvā,",
  "ja540:61.4_0": "bharissāmi brahāvane.",
  "ja540:62.1_0": "Migānaṁ vighāsamanvesaṁ,",
  "ja540:62.2_0": "vanamūlaphalāni ca;",
  "ja540:62.3_0": "Ahaṁ kammakaro hutvā,",
  "ja540:62.4_0": "bharissāmi brahāvane”.",
  "ja540:63.1_0": "“Nesa dhammo mahārāja,",
  "ja540:63.2_0": "netaṁ amhesu kappati;",
  "ja540:63.3_0": "Rājā tvamasi amhākaṁ,",
  "ja540:63.4_0": "pāde vandāma te mayaṁ”.",
  "ja540:64.1_0": "“Dhammaṁ nesādā bhaṇatha,",
  "ja540:64.2_0": "katā apacitī tayā;",
  "ja540:64.3_0": "Pitā tvamasi amhākaṁ,",
  "ja540:64.4_0": "mātā tvamasi pārike”.",
  "ja540:65.1_0": "“Namo te kāsirājatthu,",
  "ja540:65.2_0": "namo te kāsivaḍḍhana;",
  "ja540:65.3_0": "Añjaliṁ te paggaṇhāma,",
  "ja540:65.4_0": "yāva sāmānupāpaya.",
  "ja540:66.1_0": "Tassa pāde samajjantā,",
  "ja540:66.2_0": "mukhañca bhujadassanaṁ;",
  "ja540:66.3_0": "Saṁsumbhamānā attānaṁ,",
  "ja540:66.4_0": "kālamāgamayāmase”.",
  "ja540:67.1_0": "“Brahā vāḷamigākiṇṇaṁ,",
  "ja540:67.2_0": "ākāsantaṁva dissati;",
  "ja540:67.3_0": "Yattha sāmo hato seti,",
  "ja540:67.4_0": "candova patito chamā.",
  "ja540:68.1_0": "Brahā vāḷamigākiṇṇaṁ,",
  "ja540:68.2_0": "ākāsantaṁva dissati;",
  "ja540:68.3_0": "Yattha sāmo hato seti,",
  "ja540:68.4_0": "sūriyova patito chamā.",
  "ja540:69.1_0": "Brahā vāḷamigākiṇṇaṁ,",
  "ja540:69.2_0": "ākāsantaṁva dissati;",
  "ja540:69.3_0": "Yattha sāmo hato seti,",
  "ja540:69.4_0": "paṁsunā patikunthito.",
  "ja540:70.1_0": "Brahā vāḷamigākiṇṇaṁ,",
  "ja540:70.2_0": "ākāsantaṁva dissati;",
  "ja540:70.3_0": "Yattha sāmo hato seti,",
  "ja540:70.4_0": "idheva vasathassame”.",
  "ja540:71.1_0": "“Yadi tattha sahassāni,",
  "ja540:71.2_0": "satāni niyutāni ca;",
  "ja540:71.3_0": "Nevamhākaṁ bhayaṁ koci,",
  "ja540:71.4_0": "vane vāḷesu vijjati”.",
  "ja540:72.1_0": "Tato andhānamādāya,",
  "ja540:72.2_0": "kāsirājā brahāvane;",
  "ja540:72.3_0": "Hatthe gahetvā pakkāmi,",
  "ja540:72.4_0": "yattha sāmo hato ahu.",
  "ja540:73.1_0": "Disvāna patitaṁ sāmaṁ,",
  "ja540:73.2_0": "puttakaṁ paṁsukunthitaṁ;",
  "ja540:73.3_0": "Apaviddhaṁ brahāraññe,",
  "ja540:73.4_0": "candaṁva patitaṁ chamā.",
  "ja540:74.1_0": "Disvāna patitaṁ sāmaṁ,",
  "ja540:74.2_0": "puttakaṁ paṁsukunthitaṁ;",
  "ja540:74.3_0": "Apaviddhaṁ brahāraññe,",
  "ja540:74.4_0": "sūriyaṁva patitaṁ chamā.",
  "ja540:75.1_0": "Disvāna patitaṁ sāmaṁ,",
  "ja540:75.2_0": "puttakaṁ paṁsukunthitaṁ;",
  "ja540:75.3_0": "Apaviddhaṁ brahāraññe,",
  "ja540:75.4_0": "kalūnaṁ paridevayuṁ.",
  "ja540:76.1_0": "Disvāna patitaṁ sāmaṁ,",
  "ja540:76.2_0": "puttakaṁ paṁsukunthitaṁ;",
  "ja540:76.3_0": "Bāhā paggayha pakkanduṁ,",
  "ja540:76.4_0": "“adhammo kira bho iti.",
  "ja540:77.1_0": "Bāḷhaṁ kho tvaṁ pamattosi,",
  "ja540:77.2_0": "sāma kalyāṇadassana;",
  "ja540:77.3_0": "Yo ajjevaṁ gate kāle,",
  "ja540:77.4_0": "na kiñci mabhibhāsasi.",
  "ja540:78.1_0": "Bāḷhaṁ kho tvaṁ padittosi,",
  "ja540:78.2_0": "sāma kalyāṇadassana;",
  "ja540:78.3_0": "Yo ajjevaṁ gate kāle,",
  "ja540:78.4_0": "na kiñci mabhibhāsasi.",
  "ja540:79.1_0": "Bāḷhaṁ kho tvaṁ pakuddhosi,",
  "ja540:79.2_0": "sāma kalyāṇadassana;",
  "ja540:79.3_0": "Yo ajjevaṁ gate kāle,",
  "ja540:79.4_0": "na kiñci mabhibhāsasi.",
  "ja540:80.1_0": "Bāḷhaṁ kho tvaṁ pasuttosi,",
  "ja540:80.2_0": "sāma kalyāṇadassana;",
  "ja540:80.3_0": "Yo ajjevaṁ gate kāle,",
  "ja540:80.4_0": "na kiñci mabhibhāsasi.",
  "ja540:81.1_0": "Bāḷhaṁ kho tvaṁ vimanosi,",
  "ja540:81.2_0": "sāma kalyāṇadassana;",
  "ja540:81.3_0": "Yo ajjevaṁ gate kāle,",
  "ja540:81.4_0": "na kiñci mabhibhāsasi.",
  "ja540:82.1_0": "Jaṭaṁ valinaṁ paṁsugataṁ,",
  "ja540:82.2_0": "ko dāni saṇṭhapessati;",
  "ja540:82.3_0": "Sāmo ayaṁ kālaṅkato,",
  "ja540:82.4_0": "andhānaṁ paricārako.",
  "ja540:83.1_0": "Ko me sammajjamādāya,",
  "ja540:83.2_0": "sammajjissati assamaṁ;",
  "ja540:83.3_0": "Sāmo ayaṁ kālaṅkato,",
  "ja540:83.4_0": "andhānaṁ paricārako.",
  "ja540:84.1_0": "Ko dāni nhāpayissati,",
  "ja540:84.2_0": "sītenuṇhodakena ca;",
  "ja540:84.3_0": "Sāmo ayaṁ kālaṅkato,",
  "ja540:84.4_0": "andhānaṁ paricārako.",
  "ja540:85.1_0": "Ko dāni bhojayissati,",
  "ja540:85.2_0": "vanamūlaphalāni ca;",
  "ja540:85.3_0": "Sāmo ayaṁ kālaṅkato,",
  "ja540:85.4_0": "andhānaṁ paricārako”.",
  "ja540:86.1_0": "Disvāna patitaṁ sāmaṁ,",
  "ja540:86.2_0": "puttakaṁ paṁsukunthitaṁ;",
  "ja540:86.3_0": "Aṭṭitā puttasokena,",
  "ja540:86.4_0": "mātā saccaṁ abhāsatha.",
  "ja540:87.1_0": "“Yena saccenayaṁ sāmo,",
  "ja540:87.2_0": "dhammacārī pure ahu;",
  "ja540:87.3_0": "Etena saccavajjena,",
  "ja540:87.4_0": "visaṁ sāmassa haññatu.",
  "ja540:88.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:88.2_0": "brahmacārī pure ahu;",
  "ja540:88.3_0": "Etena saccavajjena,",
  "ja540:88.4_0": "visaṁ sāmassa haññatu.",
  "ja540:89.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:89.2_0": "saccavādī pure ahu;",
  "ja540:89.3_0": "Etena saccavajjena,",
  "ja540:89.4_0": "visaṁ sāmassa haññatu.",
  "ja540:90.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:90.2_0": "mātāpettibharo ahu;",
  "ja540:90.3_0": "Etena saccavajjena,",
  "ja540:90.4_0": "visaṁ sāmassa haññatu.",
  "ja540:91.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:91.2_0": "kule jeṭṭhāpacāyiko;",
  "ja540:91.3_0": "Etena saccavajjena,",
  "ja540:91.4_0": "visaṁ sāmassa haññatu.",
  "ja540:92.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:92.2_0": "pāṇā piyataro mama;",
  "ja540:92.3_0": "Etena saccavajjena,",
  "ja540:92.4_0": "visaṁ sāmassa haññatu.",
  "ja540:93.1_0": "Yaṁ kiñcitthi kataṁ puññaṁ,",
  "ja540:93.2_0": "Mayhañceva pitucca te;",
  "ja540:93.3_0": "Sabbena tena kusalena,",
  "ja540:93.4_0": "Visaṁ sāmassa haññatu”.",
  "ja540:94.1_0": "Disvāna patitaṁ sāmaṁ,",
  "ja540:94.2_0": "puttakaṁ paṁsukunthitaṁ;",
  "ja540:94.3_0": "Aṭṭito puttasokena,",
  "ja540:94.4_0": "pitā saccaṁ abhāsatha.",
  "ja540:95.1_0": "“Yena saccenayaṁ sāmo,",
  "ja540:95.2_0": "dhammacārī pure ahu;",
  "ja540:95.3_0": "Etena saccavajjena,",
  "ja540:95.4_0": "visaṁ sāmassa haññatu.",
  "ja540:96.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:96.2_0": "brahmacārī pure ahu;",
  "ja540:96.3_0": "Etena saccavajjena,",
  "ja540:96.4_0": "visaṁ sāmassa haññatu.",
  "ja540:97.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:97.2_0": "saccavādī pure ahu;",
  "ja540:97.3_0": "Etena saccavajjena,",
  "ja540:97.4_0": "visaṁ sāmassa haññatu.",
  "ja540:98.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:98.2_0": "mātāpettibharo ahu;",
  "ja540:98.3_0": "Etena saccavajjena,",
  "ja540:98.4_0": "visaṁ sāmassa haññatu.",
  "ja540:99.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:99.2_0": "kule jeṭṭhāpacāyiko;",
  "ja540:99.3_0": "Etena saccavajjena,",
  "ja540:99.4_0": "visaṁ sāmassa haññatu.",
  "ja540:100.1_0": "Yena saccenayaṁ sāmo,",
  "ja540:100.2_0": "pāṇā piyataro mama;",
  "ja540:100.3_0": "Etena saccavajjena,",
  "ja540:100.4_0": "visaṁ sāmassa haññatu.",
  "ja540:101.1_0": "Yaṁ kiñcitthi kataṁ puññaṁ,",
  "ja540:101.2_0": "Mayhañceva mātucca te;",
  "ja540:101.3_0": "Sabbena tena kusalena,",
  "ja540:101.4_0": "Visaṁ sāmassa haññatu.",
  "ja540:102.1_0": "Sā devatā antarahitā,",
  "ja540:102.2_0": "pabbate gandhamādane;",
  "ja540:102.3_0": "Sāmassa anukampāya,",
  "ja540:102.4_0": "imaṁ saccaṁ abhāsatha.",
  "ja540:103.1_0": "Pabbatyāhaṁ gandhamādane,",
  "ja540:103.2_0": "cirarattanivāsinī;",
  "ja540:103.3_0": "Na me piyataro koci,",
  "ja540:103.4_0": "añño sāmena vijjati;",
  "ja540:103.5_0": "Etena saccavajjena,",
  "ja540:103.6_0": "visaṁ sāmassa haññatu.",
  "ja540:104.1_0": "Sabbe vanā gandhamayā,",
  "ja540:104.2_0": "pabbate gandhamādane;",
  "ja540:104.3_0": "Etena saccavajjena,",
  "ja540:104.4_0": "visaṁ sāmassa haññatu”.",
  "ja540:105.1_0": "Tesaṁ lālappamānānaṁ,",
  "ja540:105.2_0": "bahuṁ kāruññasañhitaṁ;",
  "ja540:105.3_0": "Khippaṁ sāmo samuṭṭhāsi,",
  "ja540:105.4_0": "yuvā kalyāṇadassano.",
  "ja540:106.1_0": "“Sāmohamasmi bhaddaṁ vo,",
  "ja540:106.2_0": "Sotthināmhi samuṭṭhito;",
  "ja540:106.3_0": "Mā bāḷhaṁ paridevetha,",
  "ja540:106.4_0": "Mañjunābhivadetha maṁ”.",
  "ja540:107.1_0": "“Svāgataṁ te mahārāja,",
  "ja540:107.2_0": "atho te adurāgataṁ;",
  "ja540:107.3_0": "Issarosi anuppatto,",
  "ja540:107.4_0": "yaṁ idhatthi pavedaya.",
  "ja540:108.1_0": "Tindukāni piyālāni,",
  "ja540:108.2_0": "madhuke kāsumāriyo;",
  "ja540:108.3_0": "Phalāni khuddakappāni,",
  "ja540:108.4_0": "bhuñja rāja varaṁ varaṁ.",
  "ja540:109.1_0": "Atthi me pānīyaṁ sītaṁ,",
  "ja540:109.2_0": "ābhataṁ girigabbharā;",
  "ja540:109.3_0": "Tato piva mahārāja,",
  "ja540:109.4_0": "sace tvaṁ abhikaṅkhasi”.",
  "ja540:110.1_0": "“Sammuyhāmi pamuyhāmi,",
  "ja540:110.2_0": "sabbā muyhanti me disā;",
  "ja540:110.3_0": "Petaṁ taṁ sāma maddakkhiṁ,",
  "ja540:110.4_0": "ko nu tvaṁ sāma jīvasi”.",
  "ja540:111.1_0": "“Api jīvaṁ mahārāja,",
  "ja540:111.2_0": "purisaṁ gāḷhavedanaṁ;",
  "ja540:111.3_0": "Upanītamanasaṅkappaṁ,",
  "ja540:111.4_0": "jīvantaṁ maññate mataṁ.",
  "ja540:112.1_0": "Api jīvaṁ mahārāja,",
  "ja540:112.2_0": "purisaṁ gāḷhavedanaṁ;",
  "ja540:112.3_0": "Taṁ nirodhagataṁ santaṁ,",
  "ja540:112.4_0": "jīvantaṁ maññate mataṁ.",
  "ja540:113.1_0": "Yo mātaraṁ pitaraṁ vā,",
  "ja540:113.2_0": "macco dhammena posati;",
  "ja540:113.3_0": "Devāpi naṁ tikicchanti,",
  "ja540:113.4_0": "mātāpettibharaṁ naraṁ.",
  "ja540:114.1_0": "Yo mātaraṁ pitaraṁ vā,",
  "ja540:114.2_0": "macco dhammena posati;",
  "ja540:114.3_0": "Idheva naṁ pasaṁsanti,",
  "ja540:114.4_0": "pecca sagge pamodati”.",
  "ja540:115.1_0": "“Esa bhiyyo pamuyhāmi,",
  "ja540:115.2_0": "Sabbā muyhanti me disā;",
  "ja540:115.3_0": "Saraṇaṁ taṁ sāma gacchāmi,",
  "ja540:115.4_0": "Tvañca me saraṇaṁ bhava”.",
  "ja540:116.1_0": "“Dhammaṁ cara mahārāja,",
  "ja540:116.2_0": "mātāpitūsu khattiya;",
  "ja540:116.3_0": "Idha dhammaṁ caritvāna,",
  "ja540:116.4_0": "rāja saggaṁ gamissasi.",
  "ja540:117.1_0": "Dhammaṁ cara mahārāja,",
  "ja540:117.2_0": "puttadāresu khattiya;",
  "ja540:117.3_0": "Idha dhammaṁ caritvāna,",
  "ja540:117.4_0": "rāja saggaṁ gamissasi.",
  "ja540:118.1_0": "Dhammaṁ cara mahārāja,",
  "ja540:118.2_0": "mittāmaccesu khattiya;",
  "ja540:118.3_0": "Idha dhammaṁ caritvāna,",
  "ja540:118.4_0": "rāja saggaṁ gamissasi.",
  "ja540:119.1_0": "Dhammaṁ cara mahārāja,",
  "ja540:119.2_0": "vāhanesu balesu ca;",
  "ja540:119.3_0": "Idha dhammaṁ caritvāna,",
  "ja540:119.4_0": "rāja saggaṁ gamissasi.",
  "ja540:120.1_0": "Dhammaṁ cara mahārāja,",
  "ja540:120.2_0": "gāmesu nigamesu ca;",
  "ja540:120.3_0": "Idha dhammaṁ caritvāna,",
  "ja540:120.4_0": "rāja saggaṁ gamissasi.",
  "ja540:121.1_0": "Dhammaṁ cara mahārāja,",
  "ja540:121.2_0": "raṭṭhesu janapadesu ca;",
  "ja540:121.3_0": "Idha dhammaṁ caritvāna,",
  "ja540:121.4_0": "rāja saggaṁ gamissasi.",
  "ja540:122.1_0": "Dhammaṁ cara mahārāja,",
  "ja540:122.2_0": "samaṇabrāhmaṇesu ca;",
  "ja540:122.3_0": "Idha dhammaṁ caritvāna,",
  "ja540:122.4_0": "rāja saggaṁ gamissasi.",
  "ja540:123.1_0": "Dhammaṁ cara mahārāja,",
  "ja540:123.2_0": "migapakkhīsu khattiya;",
  "ja540:123.3_0": "Idha dhammaṁ caritvāna,",
  "ja540:123.4_0": "rāja saggaṁ gamissasi.",
  "ja540:124.1_0": "Dhammaṁ cara mahārāja,",
  "ja540:124.2_0": "dhammo ciṇṇo sukhāvaho;",
  "ja540:124.3_0": "Idha dhammaṁ caritvāna,",
  "ja540:124.4_0": "rāja saggaṁ gamissasi.",
  "ja540:125.1_0": "Dhammaṁ cara mahārāja,",
  "ja540:125.2_0": "saindā devā sabrahmakā;",
  "ja540:125.3_0": "Suciṇṇena divaṁ pattā,",
  "ja540:125.4_0": "mā dhammaṁ rāja pāmado”ti.",
  "ja540:126.1_0": "Suvaṇṇasāmajātakaṁ tatiyaṁ."
}