{
  "vv24:0.1_0": "Vimānavatthu",
  "vv24:0.2_0": "Itthivimāna",
  "vv24:0.3_0": "Cittalatāvagga",
  "vv24:0.4_0": "7. Uposathāvimānavatthu",
  "vv24:1.1_0": "“Abhikkantena vaṇṇena,",
  "vv24:1.2_0": "yā tvaṁ tiṭṭhasi devate;",
  "vv24:1.3_0": "Obhāsentī disā sabbā,",
  "vv24:1.4_0": "osadhī viya tārakā.",
  "vv24:2.1_0": "Kena tetādiso vaṇṇo,",
  "vv24:2.2_0": "…pe…",
  "vv24:2.3_0": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv24:3.1_0": "Sā devatā attamanā,",
  "vv24:3.2_0": "…pe…",
  "vv24:3.3_0": "yassa kammassidaṁ phalaṁ.",
  "vv24:4.1_0": "“Uposathāti maṁ aññaṁsu,",
  "vv24:4.2_0": "sāketāyaṁ upāsikā;",
  "vv24:4.3_0": "Saddhā sīlena sampannā,",
  "vv24:4.4_0": "saṁvibhāgaratā sadā.",
  "vv24:5.1_0": "Acchādanañca bhattañca,",
  "vv24:5.2_0": "senāsanaṁ padīpiyaṁ;",
  "vv24:5.3_0": "Adāsiṁ ujubhūtesu,",
  "vv24:5.4_0": "vippasannena cetasā.",
  "vv24:6.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "vv24:6.2_0": "yā ca pakkhassa aṭṭhamī;",
  "vv24:6.3_0": "Pāṭihāriyapakkhañca,",
  "vv24:6.4_0": "aṭṭhaṅgasusamāgataṁ.",
  "vv24:7.1_0": "Uposathaṁ upavasissaṁ,",
  "vv24:7.2_0": "sadā sīlesu saṁvutā;",
  "vv24:7.3_0": "Saññamā saṁvibhāgā ca,",
  "vv24:7.4_0": "vimānaṁ āvasāmahaṁ.",
  "vv24:8.1_0": "Pāṇātipātā viratā,",
  "vv24:8.2_0": "musāvādā ca saññatā;",
  "vv24:8.3_0": "Theyyā ca aticārā ca,",
  "vv24:8.4_0": "majjapānā ca ārakā.",
  "vv24:9.1_0": "Pañcasikkhāpade ratā,",
  "vv24:9.2_0": "ariyasaccāna kovidā;",
  "vv24:9.3_0": "Upāsikā cakkhumato,",
  "vv24:9.4_0": "gotamassa yasassino.",
  "vv24:10.1_0": "Tena metādiso vaṇṇo,",
  "vv24:10.2_0": "…pe…",
  "vv24:10.3_0": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
  "vv24:11.1_0": "“Abhikkhaṇaṁ nandanaṁ sutvā,",
  "vv24:11.2_0": "Chando me udapajjatha;",
  "vv24:11.3_0": "Tattha cittaṁ paṇidhāya,",
  "vv24:11.4_0": "Upapannāmhi nandanaṁ.",
  "vv24:12.1_0": "Nākāsiṁ satthu vacanaṁ,",
  "vv24:12.2_0": "buddhassādiccabandhuno;",
  "vv24:12.3_0": "Hīne cittaṁ paṇidhāya,",
  "vv24:12.4_0": "sāmhi pacchānutāpinī”ti.",
  "vv24:13.1_0": "“Kīva ciraṁ vimānamhi,",
  "vv24:13.2_0": "idha vacchasuposathe;",
  "vv24:13.3_0": "Devate pucchitācikkha,",
  "vv24:13.4_0": "yadi jānāsi āyuno”ti.",
  "vv24:14.1_0": "“Saṭṭhi vassasahassāni,",
  "vv24:14.2_0": "tisso ca vassakoṭiyo;",
  "vv24:14.3_0": "Idha ṭhatvā mahāmuni,",
  "vv24:14.4_0": "ito cutā gamissāmi;",
  "vv24:14.5_0": "Manussānaṁ sahabyatan”ti.",
  "vv24:15.1_0": "“Mā tvaṁ uposathe bhāyi,",
  "vv24:15.2_0": "sambuddhenāsi byākatā;",
  "vv24:15.3_0": "Sotāpannā visesayi,",
  "vv24:15.4_0": "pahīnā tava duggatī”ti.",
  "vv24:16.1_0": "Uposathāvimānaṁ sattamaṁ."
}