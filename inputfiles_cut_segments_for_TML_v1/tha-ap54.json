{
  "tha-ap54:0.1_0": "Therāpadāna",
  "tha-ap54:0.2_0": "Bījanivagga",
  "tha-ap54:0.3_0": "2 Sataraṁsittheraapadāna",
  "tha-ap54:1.1_0": "“Ubbiddhaṁ selamāruyha,",
  "tha-ap54:1.2_0": "nisīdi purisuttamo;",
  "tha-ap54:1.3_0": "Pabbatassāvidūramhi,",
  "tha-ap54:1.4_0": "brāhmaṇo mantapāragū.",
  "tha-ap54:2.1_0": "Upaviṭṭhaṁ mahāvīraṁ,",
  "tha-ap54:2.2_0": "devadevaṁ narāsabhaṁ;",
  "tha-ap54:2.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap54:2.4_0": "santhaviṁ lokanāyakaṁ.",
  "tha-ap54:3.1_0": "‘Esa buddho mahāvīro,",
  "tha-ap54:3.2_0": "varadhammappakāsako;",
  "tha-ap54:3.3_0": "Jalati aggikhandhova,",
  "tha-ap54:3.4_0": "bhikkhusaṅghapurakkhato.",
  "tha-ap54:4.1_0": "Mahāsamuddovakkhubbho,",
  "tha-ap54:4.2_0": "aṇṇavova duruttaro;",
  "tha-ap54:4.3_0": "Migarājāvasambhīto,",
  "tha-ap54:4.4_0": "dhammaṁ deseti cakkhumā’.",
  "tha-ap54:5.1_0": "Mama saṅkappamaññāya,",
  "tha-ap54:5.2_0": "padumuttaranāyako;",
  "tha-ap54:5.3_0": "Bhikkhusaṅghe ṭhito satthā,",
  "tha-ap54:5.4_0": "imā gāthā abhāsatha.",
  "tha-ap54:6.1_0": "‘Yenāyaṁ añjalī dinno,",
  "tha-ap54:6.2_0": "buddhaseṭṭho ca thomito;",
  "tha-ap54:6.3_0": "Tiṁsakappasahassāni,",
  "tha-ap54:6.4_0": "devarajjaṁ karissati.",
  "tha-ap54:7.1_0": "Kappasatasahassamhi,",
  "tha-ap54:7.2_0": "aṅgīrasasanāmako;",
  "tha-ap54:7.3_0": "Vivaṭṭacchado sambuddho,",
  "tha-ap54:7.4_0": "uppajjissati tāvade.",
  "tha-ap54:8.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap54:8.2_0": "oraso dhammanimmito;",
  "tha-ap54:8.3_0": "Sataraṁsīti nāmena,",
  "tha-ap54:8.4_0": "arahā so bhavissati’.",
  "tha-ap54:9.1_0": "Jātiyā sattavassohaṁ,",
  "tha-ap54:9.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap54:9.3_0": "Sataraṁsimhi nāmena,",
  "tha-ap54:9.4_0": "pabhā niddhāvate mama.",
  "tha-ap54:10.1_0": "Maṇḍape rukkhamūle vā,",
  "tha-ap54:10.2_0": "jhāyī jhānarato ahaṁ;",
  "tha-ap54:10.3_0": "Dhāremi antimaṁ dehaṁ,",
  "tha-ap54:10.4_0": "sammāsambuddhasāsane.",
  "tha-ap54:11.1_0": "Saṭṭhikappasahassamhi,",
  "tha-ap54:11.2_0": "caturo rāmanāmakā;",
  "tha-ap54:11.3_0": "Sattaratanasampannā,",
  "tha-ap54:11.4_0": "cakkavattī mahabbalā.",
  "tha-ap54:12.1_0": "Paṭisambhidā catasso,",
  "tha-ap54:12.2_0": "…pe…",
  "tha-ap54:12.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap54:13.1_0": "Itthaṁ sudaṁ āyasmā sataraṁsi thero imā gāthāyo abhāsitthāti.",
  "tha-ap54:14.1_0": "Sataraṁsittherassāpadānaṁ dutiyaṁ."
}