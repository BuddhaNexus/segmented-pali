{
  "tha-ap239:0.1_0": "Therāpadāna",
  "tha-ap239:0.2_0": "Udakāsanavagga",
  "tha-ap239:0.3_0": "7. Piyālapupphiyattheraapadāna",
  "tha-ap239:1.1_0": "“Migaluddo pure āsiṁ,",
  "tha-ap239:1.2_0": "araññe kānane ahaṁ;",
  "tha-ap239:1.3_0": "Piyālaṁ pupphitaṁ disvā,",
  "tha-ap239:1.4_0": "gatamagge khipiṁ ahaṁ.",
  "tha-ap239:2.1_0": "Ekanavutito kappe,",
  "tha-ap239:2.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap239:2.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap239:2.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap239:3.1_0": "Paṭisambhidā catasso,",
  "tha-ap239:3.2_0": "…pe…",
  "tha-ap239:3.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap239:4.1_0": "Itthaṁ sudaṁ āyasmā piyālapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap239:5.1_0": "Piyālapupphiyattherassāpadānaṁ sattamaṁ."
}