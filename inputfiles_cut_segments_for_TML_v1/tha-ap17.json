{
  "tha-ap17:0.1_0": "Therāpadāna",
  "tha-ap17:0.2_0": "Sīhāsaniyavagga",
  "tha-ap17:0.3_0": "5 Pilindavacchattheraapadāna",
  "tha-ap17:1.1_0": "“Nibbute lokanāthamhi,",
  "tha-ap17:1.2_0": "sumedhe aggapuggale;",
  "tha-ap17:1.3_0": "Pasannacitto sumano,",
  "tha-ap17:1.4_0": "thūpapūjaṁ akāsahaṁ.",
  "tha-ap17:2.1_0": "Ye ca khīṇāsavā tattha,",
  "tha-ap17:2.2_0": "chaḷabhiññā mahiddhikā;",
  "tha-ap17:2.3_0": "Tehaṁ tattha samānetvā,",
  "tha-ap17:2.4_0": "saṅghabhattaṁ akāsahaṁ.",
  "tha-ap17:3.1_0": "Sumedhassa bhagavato,",
  "tha-ap17:3.2_0": "upaṭṭhāko tadā ahu;",
  "tha-ap17:3.3_0": "Sumedho nāma nāmena,",
  "tha-ap17:3.4_0": "anumodittha so tadā.",
  "tha-ap17:4.1_0": "Tena cittappasādena,",
  "tha-ap17:4.2_0": "vimānaṁ upapajjahaṁ;",
  "tha-ap17:4.3_0": "Chaḷāsītisahassāni,",
  "tha-ap17:4.4_0": "accharāyo ramiṁsu me.",
  "tha-ap17:5.1_0": "Mameva anuvattanti,",
  "tha-ap17:5.2_0": "sabbakāmehi tā sadā;",
  "tha-ap17:5.3_0": "Aññe deve abhibhomi,",
  "tha-ap17:5.4_0": "puññakammassidaṁ phalaṁ.",
  "tha-ap17:6.1_0": "Pañcavīsatikappamhi,",
  "tha-ap17:6.2_0": "varuṇo nāma khattiyo;",
  "tha-ap17:6.3_0": "Visuddhabhojano āsiṁ,",
  "tha-ap17:6.4_0": "cakkavattī ahaṁ tadā.",
  "tha-ap17:7.1_0": "Na te bījaṁ pavapanti,",
  "tha-ap17:7.2_0": "napi nīyanti naṅgalā;",
  "tha-ap17:7.3_0": "Akaṭṭhapākimaṁ sāliṁ,",
  "tha-ap17:7.4_0": "paribhuñjanti mānusā.",
  "tha-ap17:8.1_0": "Tattha rajjaṁ karitvāna,",
  "tha-ap17:8.2_0": "devattaṁ puna gacchahaṁ;",
  "tha-ap17:8.3_0": "Tadāpi edisā mayhaṁ,",
  "tha-ap17:8.4_0": "nibbattā bhogasampadā.",
  "tha-ap17:9.1_0": "Na maṁ mittā amittā vā,",
  "tha-ap17:9.2_0": "hiṁsanti sabbapāṇino;",
  "tha-ap17:9.3_0": "Sabbesampi piyo homi,",
  "tha-ap17:9.4_0": "puññakammassidaṁ phalaṁ.",
  "tha-ap17:10.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap17:10.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap17:10.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap17:10.4_0": "gandhālepassidaṁ phalaṁ.",
  "tha-ap17:11.1_0": "Imasmiṁ bhaddake kappe,",
  "tha-ap17:11.2_0": "eko āsiṁ janādhipo;",
  "tha-ap17:11.3_0": "Mahānubhāvo rājāhaṁ,",
  "tha-ap17:11.4_0": "cakkavattī mahabbalo.",
  "tha-ap17:12.1_0": "Sohaṁ pañcasu sīlesu,",
  "tha-ap17:12.2_0": "ṭhapetvā janataṁ bahuṁ;",
  "tha-ap17:12.3_0": "Pāpetvā sugatiṁyeva,",
  "tha-ap17:12.4_0": "devatānaṁ piyo ahuṁ.",
  "tha-ap17:13.1_0": "Paṭisambhidā catasso,",
  "tha-ap17:13.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap17:13.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap17:13.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap17:14.1_0": "Itthaṁ sudaṁ āyasmā pilindavaccho thero imā gāthāyo abhāsitthāti.",
  "tha-ap17:15.1_0": "Pilindavacchattherassāpadānaṁ pañcamaṁ."
}