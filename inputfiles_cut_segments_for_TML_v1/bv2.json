{
  "bv2:0.1_0": "Buddhavaṁsa",
  "bv2:0.2_0": "2 Sumedhapatthanākathā",
  "bv2:1.1_0": "“Kappe ca satasahasse,",
  "bv2:1.2_0": "caturo ca asaṅkhiye;",
  "bv2:1.3_0": "Amaraṁ nāma nagaraṁ,",
  "bv2:1.4_0": "dassaneyyaṁ manoramaṁ.",
  "bv2:2.1_0": "Dasahi saddehi avivittaṁ,",
  "bv2:2.2_0": "Annapānasamāyutaṁ;",
  "bv2:2.3_0": "Hatthisaddaṁ assasaddaṁ,",
  "bv2:2.4_0": "Bherisaṅkharathāni ca;",
  "bv2:2.5_0": "Khādatha pivatha ceva,",
  "bv2:2.6_0": "Annapānena ghositaṁ.",
  "bv2:3.1_0": "Nagaraṁ sabbaṅgasampannaṁ,",
  "bv2:3.2_0": "sabbakammamupāgataṁ;",
  "bv2:3.3_0": "Sattaratanasampannaṁ,",
  "bv2:3.4_0": "nānājanasamākulaṁ;",
  "bv2:3.5_0": "Samiddhaṁ devanagaraṁva,",
  "bv2:3.6_0": "āvāsaṁ puññakamminaṁ.",
  "bv2:4.1_0": "Nagare amaravatiyā,",
  "bv2:4.2_0": "sumedho nāma brāhmaṇo;",
  "bv2:4.3_0": "Anekakoṭisannicayo,",
  "bv2:4.4_0": "pahūtadhanadhaññavā.",
  "bv2:5.1_0": "Ajjhāyako mantadharo,",
  "bv2:5.2_0": "tiṇṇaṁ vedāna pāragū;",
  "bv2:5.3_0": "Lakkhaṇe itihāse ca,",
  "bv2:5.4_0": "sadhamme pāramiṁ gato.",
  "bv2:6.1_0": "Rahogato nisīditvā,",
  "bv2:6.2_0": "evaṁ cintesahaṁ tadā;",
  "bv2:6.3_0": "‘Dukkho punabbhavo nāma,",
  "bv2:6.4_0": "sarīrassa ca bhedanaṁ.",
  "bv2:7.1_0": "Jātidhammo jarādhammo,",
  "bv2:7.2_0": "Byādhidhammo sahaṁ tadā;",
  "bv2:7.3_0": "Ajaraṁ amataṁ khemaṁ,",
  "bv2:7.4_0": "Pariyesissāmi nibbutiṁ.",
  "bv2:8.1_0": "Yaṁnūnimaṁ pūtikāyaṁ,",
  "bv2:8.2_0": "nānākuṇapapūritaṁ;",
  "bv2:8.3_0": "Chaḍḍayitvāna gaccheyyaṁ,",
  "bv2:8.4_0": "anapekkho anatthiko.",
  "bv2:9.1_0": "Atthi hehiti so maggo,",
  "bv2:9.2_0": "na so sakkā na hetuye;",
  "bv2:9.3_0": "Pariyesissāmi taṁ maggaṁ,",
  "bv2:9.4_0": "bhavato parimuttiyā.",
  "bv2:10.1_0": "Yathāpi dukkhe vijjante,",
  "bv2:10.2_0": "sukhaṁ nāmapi vijjati;",
  "bv2:10.3_0": "Evaṁ bhave vijjamāne,",
  "bv2:10.4_0": "vibhavopi icchitabbako.",
  "bv2:11.1_0": "Yathāpi uṇhe vijjante,",
  "bv2:11.2_0": "aparaṁ vijjati sītalaṁ;",
  "bv2:11.3_0": "Evaṁ tividhaggi vijjante,",
  "bv2:11.4_0": "nibbānaṁ icchitabbakaṁ.",
  "bv2:12.1_0": "Yathāpi pāpe vijjante,",
  "bv2:12.2_0": "kalyāṇamapi vijjati;",
  "bv2:12.3_0": "Evamevaṁ jāti vijjante,",
  "bv2:12.4_0": "ajātipicchitabbakaṁ.",
  "bv2:13.1_0": "Yathā gūthagato puriso,",
  "bv2:13.2_0": "taḷākaṁ disvāna pūritaṁ;",
  "bv2:13.3_0": "Na gavesati taṁ taḷākaṁ,",
  "bv2:13.4_0": "na doso taḷākassa so.",
  "bv2:14.1_0": "Evaṁ kilesamaladhovaṁ,",
  "bv2:14.2_0": "vijjante amatantaḷe;",
  "bv2:14.3_0": "Na gavesati taṁ taḷākaṁ,",
  "bv2:14.4_0": "na doso amatantaḷe.",
  "bv2:15.1_0": "Yathā arīhi pariruddho,",
  "bv2:15.2_0": "vijjante gamanampathe;",
  "bv2:15.3_0": "Na palāyati so puriso,",
  "bv2:15.4_0": "na doso añjasassa so.",
  "bv2:16.1_0": "Evaṁ kilesapariruddho,",
  "bv2:16.2_0": "vijjamāne sive pathe;",
  "bv2:16.3_0": "Na gavesati taṁ maggaṁ,",
  "bv2:16.4_0": "na doso sivamañjase.",
  "bv2:17.1_0": "Yathāpi byādhito puriso,",
  "bv2:17.2_0": "vijjamāne tikicchake;",
  "bv2:17.3_0": "Na tikicchāpeti taṁ byādhiṁ,",
  "bv2:17.4_0": "na doso so tikicchake.",
  "bv2:18.1_0": "Evaṁ kilesabyādhīhi,",
  "bv2:18.2_0": "Dukkhito paripīḷito;",
  "bv2:18.3_0": "Na gavesati taṁ ācariyaṁ,",
  "bv2:18.4_0": "Na doso so vināyake.",
  "bv2:19.1_0": "Yathāpi kuṇapaṁ puriso,",
  "bv2:19.2_0": "kaṇṭhe baddhaṁ jigucchiya;",
  "bv2:19.3_0": "Mocayitvāna gaccheyya,",
  "bv2:19.4_0": "sukhī serī sayaṁvasī.",
  "bv2:20.1_0": "Tathevimaṁ pūtikāyaṁ,",
  "bv2:20.2_0": "nānākuṇapasañcayaṁ;",
  "bv2:20.3_0": "Chaḍḍayitvāna gaccheyyaṁ,",
  "bv2:20.4_0": "anapekkho anatthiko.",
  "bv2:21.1_0": "Yathā uccāraṭṭhānamhi,",
  "bv2:21.2_0": "karīsaṁ naranāriyo;",
  "bv2:21.3_0": "Chaḍḍayitvāna gacchanti,",
  "bv2:21.4_0": "anapekkhā anatthikā.",
  "bv2:22.1_0": "Evamevāhaṁ imaṁ kāyaṁ,",
  "bv2:22.2_0": "nānākuṇapapūritaṁ;",
  "bv2:22.3_0": "Chaḍḍayitvāna gacchissaṁ,",
  "bv2:22.4_0": "vaccaṁ katvā yathā kuṭiṁ.",
  "bv2:23.1_0": "Yathāpi jajjaraṁ nāvaṁ,",
  "bv2:23.2_0": "paluggaṁ udagāhiniṁ;",
  "bv2:23.3_0": "Sāmī chaḍḍetvā gacchanti,",
  "bv2:23.4_0": "anapekkhā anatthikā.",
  "bv2:24.1_0": "Evamevāhaṁ imaṁ kāyaṁ,",
  "bv2:24.2_0": "navacchiddaṁ dhuvassavaṁ;",
  "bv2:24.3_0": "Chaḍḍayitvāna gacchissaṁ,",
  "bv2:24.4_0": "jiṇṇanāvaṁva sāmikā.",
  "bv2:25.1_0": "Yathāpi puriso corehi,",
  "bv2:25.2_0": "gacchanto bhaṇḍamādiya;",
  "bv2:25.3_0": "Bhaṇḍacchedabhayaṁ disvā,",
  "bv2:25.4_0": "chaḍḍayitvāna gacchati.",
  "bv2:26.1_0": "Evamevaṁ ayaṁ kāyo,",
  "bv2:26.2_0": "mahācorasamo viya;",
  "bv2:26.3_0": "Pahāyimaṁ gamissāmi,",
  "bv2:26.4_0": "kusalacchedanā bhayā’.",
  "bv2:27.1_0": "Evāhaṁ cintayitvāna,",
  "bv2:27.2_0": "nekakoṭisataṁ dhanaṁ;",
  "bv2:27.3_0": "Nāthānāthānaṁ datvāna,",
  "bv2:27.4_0": "himavantamupāgamiṁ.",
  "bv2:28.1_0": "Himavantassāvidūre,",
  "bv2:28.2_0": "dhammiko nāma pabbato;",
  "bv2:28.3_0": "Assamo sukato mayhaṁ,",
  "bv2:28.4_0": "paṇṇasālā sumāpitā.",
  "bv2:29.1_0": "Caṅkamaṁ tattha māpesiṁ,",
  "bv2:29.2_0": "pañcadosavivajjitaṁ;",
  "bv2:29.3_0": "Aṭṭhaguṇasamupetaṁ,",
  "bv2:29.4_0": "abhiññābalamāhariṁ.",
  "bv2:30.1_0": "Sāṭakaṁ pajahiṁ tattha,",
  "bv2:30.2_0": "navadosamupāgataṁ;",
  "bv2:30.3_0": "Vākacīraṁ nivāsesiṁ,",
  "bv2:30.4_0": "dvādasaguṇamupāgataṁ.",
  "bv2:31.1_0": "Aṭṭhadosasamākiṇṇaṁ,",
  "bv2:31.2_0": "pajahiṁ paṇṇasālakaṁ;",
  "bv2:31.3_0": "Upāgamiṁ rukkhamūlaṁ,",
  "bv2:31.4_0": "guṇe dasahupāgataṁ.",
  "bv2:32.1_0": "Vāpitaṁ ropitaṁ dhaññaṁ,",
  "bv2:32.2_0": "pajahiṁ niravasesato;",
  "bv2:32.3_0": "Anekaguṇasampannaṁ,",
  "bv2:32.4_0": "pavattaphalamādiyiṁ.",
  "bv2:33.1_0": "Tatthappadhānaṁ padahiṁ,",
  "bv2:33.2_0": "nisajjaṭṭhānacaṅkame;",
  "bv2:33.3_0": "Abbhantaramhi sattāhe,",
  "bv2:33.4_0": "abhiññābalapāpuṇiṁ.",
  "bv2:34.1_0": "Evaṁ me siddhippattassa,",
  "bv2:34.2_0": "vasībhūtassa sāsane;",
  "bv2:34.3_0": "Dīpaṅkaro nāma jino,",
  "bv2:34.4_0": "uppajji lokanāyako.",
  "bv2:35.1_0": "Uppajjante ca jāyante,",
  "bv2:35.2_0": "bujjhante dhammadesane;",
  "bv2:35.3_0": "Caturo nimitte nāddasaṁ,",
  "bv2:35.4_0": "jhānaratisamappito.",
  "bv2:36.1_0": "Paccantadesavisaye,",
  "bv2:36.2_0": "nimantetvā tathāgataṁ;",
  "bv2:36.3_0": "Tassa āgamanaṁ maggaṁ,",
  "bv2:36.4_0": "sodhenti tuṭṭhamānasā.",
  "bv2:37.1_0": "Ahaṁ tena samayena,",
  "bv2:37.2_0": "nikkhamitvā sakassamā;",
  "bv2:37.3_0": "Dhunanto vākacīrāni,",
  "bv2:37.4_0": "gacchāmi ambare tadā.",
  "bv2:38.1_0": "Vedajātaṁ janaṁ disvā,",
  "bv2:38.2_0": "tuṭṭhahaṭṭhaṁ pamoditaṁ;",
  "bv2:38.3_0": "Orohitvāna gaganā,",
  "bv2:38.4_0": "manusse pucchi tāvade.",
  "bv2:39.1_0": "‘Tuṭṭhahaṭṭho pamudito,",
  "bv2:39.2_0": "vedajāto mahājano;",
  "bv2:39.3_0": "Kassa sodhīyati maggo,",
  "bv2:39.4_0": "añjasaṁ vaṭumāyanaṁ’.",
  "bv2:40.1_0": "Te me puṭṭhā viyākaṁsu,",
  "bv2:40.2_0": "‘buddho loke anuttaro;",
  "bv2:40.3_0": "Dīpaṅkaro nāma jino,",
  "bv2:40.4_0": "uppajji lokanāyako;",
  "bv2:40.5_0": "Tassa sodhīyati maggo,",
  "bv2:40.6_0": "añjasaṁ vaṭumāyanaṁ’.",
  "bv2:41.1_0": "Buddhotivacanaṁ sutvāna,",
  "bv2:41.2_0": "pīti uppajji tāvade;",
  "bv2:41.3_0": "Buddho buddhoti kathayanto,",
  "bv2:41.4_0": "somanassaṁ pavedayiṁ.",
  "bv2:42.1_0": "Tattha ṭhatvā vicintesiṁ,",
  "bv2:42.2_0": "tuṭṭho saṁviggamānaso;",
  "bv2:42.3_0": "‘Idha bījāni ropissaṁ,",
  "bv2:42.4_0": "khaṇo ve mā upaccagā’.",
  "bv2:43.1_0": "‘Yadi buddhassa sodhetha,",
  "bv2:43.2_0": "ekokāsaṁ dadātha me;",
  "bv2:43.3_0": "Ahampi sodhayissāmi,",
  "bv2:43.4_0": "añjasaṁ vaṭumāyanaṁ’.",
  "bv2:44.1_0": "Adaṁsu te mamokāsaṁ,",
  "bv2:44.2_0": "sodhetuṁ añjasaṁ tadā;",
  "bv2:44.3_0": "Buddho buddhoti cintento,",
  "bv2:44.4_0": "maggaṁ sodhemahaṁ tadā.",
  "bv2:45.1_0": "Aniṭṭhite mamokāse,",
  "bv2:45.2_0": "dīpaṅkaro mahāmuni;",
  "bv2:45.3_0": "Catūhi satasahassehi,",
  "bv2:45.4_0": "chaḷabhiññehi tādihi;",
  "bv2:45.5_0": "Khīṇāsavehi vimalehi,",
  "bv2:45.6_0": "paṭipajji añjasaṁ jino.",
  "bv2:46.1_0": "Paccuggamanā vattanti,",
  "bv2:46.2_0": "vajjanti bheriyo bahū;",
  "bv2:46.3_0": "Āmoditā naramarū,",
  "bv2:46.4_0": "sādhukāraṁ pavattayuṁ.",
  "bv2:47.1_0": "Devā manusse passanti,",
  "bv2:47.2_0": "manussāpi ca devatā;",
  "bv2:47.3_0": "Ubhopi te pañjalikā,",
  "bv2:47.4_0": "anuyanti tathāgataṁ.",
  "bv2:48.1_0": "Devā dibbehi turiyehi,",
  "bv2:48.2_0": "manussā mānusehi ca;",
  "bv2:48.3_0": "Ubhopi te vajjayantā,",
  "bv2:48.4_0": "anuyanti tathāgataṁ.",
  "bv2:49.1_0": "Dibbaṁ mandāravaṁ pupphaṁ,",
  "bv2:49.2_0": "padumaṁ pārichattakaṁ;",
  "bv2:49.3_0": "Disodisaṁ okiranti,",
  "bv2:49.4_0": "ākāsanabhagatā marū.",
  "bv2:50.1_0": "Dibbaṁ candanacuṇṇañca,",
  "bv2:50.2_0": "varagandhañca kevalaṁ;",
  "bv2:50.3_0": "Disodisaṁ okiranti,",
  "bv2:50.4_0": "ākāsanabhagatā marū.",
  "bv2:51.1_0": "Campakaṁ saralaṁ nīpaṁ,",
  "bv2:51.2_0": "nāgapunnāgaketakaṁ;",
  "bv2:51.3_0": "Disodisaṁ ukkhipanti,",
  "bv2:51.4_0": "bhūmitalagatā narā.",
  "bv2:52.1_0": "Kese muñcitvāhaṁ tattha,",
  "bv2:52.2_0": "vākacīrañca cammakaṁ;",
  "bv2:52.3_0": "Kalale pattharitvāna,",
  "bv2:52.4_0": "avakujjo nipajjahaṁ.",
  "bv2:53.1_0": "‘Akkamitvāna maṁ buddho,",
  "bv2:53.2_0": "saha sissehi gacchatu;",
  "bv2:53.3_0": "Mā naṁ kalale akkamittha,",
  "bv2:53.4_0": "hitāya me bhavissati’.",
  "bv2:54.1_0": "Pathaviyaṁ nipannassa,",
  "bv2:54.2_0": "evaṁ me āsi cetaso;",
  "bv2:54.3_0": "‘Icchamāno ahaṁ ajja,",
  "bv2:54.4_0": "kilese jhāpaye mama.",
  "bv2:55.1_0": "Kiṁ me aññātavesena,",
  "bv2:55.2_0": "dhammaṁ sacchikatenidha;",
  "bv2:55.3_0": "Sabbaññutaṁ pāpuṇitvā,",
  "bv2:55.4_0": "buddho hessaṁ sadevake.",
  "bv2:56.1_0": "Kiṁ me ekena tiṇṇena,",
  "bv2:56.2_0": "purisena thāmadassinā;",
  "bv2:56.3_0": "Sabbaññutaṁ pāpuṇitvā,",
  "bv2:56.4_0": "santāressaṁ sadevakaṁ.",
  "bv2:57.1_0": "Iminā me adhikārena,",
  "bv2:57.2_0": "katena purisuttame;",
  "bv2:57.3_0": "Sabbaññutaṁ pāpuṇitvā,",
  "bv2:57.4_0": "tāremi janataṁ bahuṁ.",
  "bv2:58.1_0": "Saṁsārasotaṁ chinditvā,",
  "bv2:58.2_0": "viddhaṁsetvā tayo bhave;",
  "bv2:58.3_0": "Dhammanāvaṁ samāruyha,",
  "bv2:58.4_0": "santāressaṁ sadevakaṁ.",
  "bv2:59.1_0": "Manussattaṁ liṅgasampatti,",
  "bv2:59.2_0": "hetu satthāradassanaṁ;",
  "bv2:59.3_0": "Pabbajjā guṇasampatti,",
  "bv2:59.4_0": "adhikāro ca chandatā;",
  "bv2:59.5_0": "Aṭṭhadhammasamodhānā,",
  "bv2:59.6_0": "abhinīhāro samijjhati’.",
  "bv2:60.1_0": "Dīpaṅkaro lokavidū,",
  "bv2:60.2_0": "āhutīnaṁ paṭiggaho;",
  "bv2:60.3_0": "Ussīsake maṁ ṭhatvāna,",
  "bv2:60.4_0": "idaṁ vacanamabravi.",
  "bv2:61.1_0": "‘Passatha imaṁ tāpasaṁ,",
  "bv2:61.2_0": "jaṭilaṁ uggatāpanaṁ;",
  "bv2:61.3_0": "Aparimeyyito kappe,",
  "bv2:61.4_0": "buddho loke bhavissati.",
  "bv2:62.1_0": "Ahu kapilavhayā rammā,",
  "bv2:62.2_0": "nikkhamitvā tathāgato;",
  "bv2:62.3_0": "Padhānaṁ padahitvāna,",
  "bv2:62.4_0": "katvā dukkarakārikaṁ.",
  "bv2:63.1_0": "Ajapālarukkhamūlasmiṁ,",
  "bv2:63.2_0": "nisīditvā tathāgato;",
  "bv2:63.3_0": "Tattha pāyāsaṁ paggayha,",
  "bv2:63.4_0": "nerañjaramupehiti.",
  "bv2:64.1_0": "Nerañjarāya tīramhi,",
  "bv2:64.2_0": "pāyāsaṁ ada so jino;",
  "bv2:64.3_0": "Paṭiyattavaramaggena,",
  "bv2:64.4_0": "bodhimūlamupehiti.",
  "bv2:65.1_0": "Tato padakkhiṇaṁ katvā,",
  "bv2:65.2_0": "bodhimaṇḍaṁ anuttaro;",
  "bv2:65.3_0": "Assattharukkhamūlamhi,",
  "bv2:65.4_0": "bujjhissati mahāyaso.",
  "bv2:66.1_0": "Imassa janikā mātā,",
  "bv2:66.2_0": "māyā nāma bhavissati;",
  "bv2:66.3_0": "Pitā suddhodano nāma,",
  "bv2:66.4_0": "ayaṁ hessati gotamo.",
  "bv2:67.1_0": "Anāsavā vītarāgā,",
  "bv2:67.2_0": "santacittā samāhitā;",
  "bv2:67.3_0": "Kolito upatisso ca,",
  "bv2:67.4_0": "aggā hessanti sāvakā;",
  "bv2:67.5_0": "Ānando nāmupaṭṭhāko,",
  "bv2:67.6_0": "upaṭṭhissatimaṁ jinaṁ.",
  "bv2:68.1_0": "Khemā uppalavaṇṇā ca,",
  "bv2:68.2_0": "aggā hessanti sāvikā;",
  "bv2:68.3_0": "Anāsavā vītarāgā,",
  "bv2:68.4_0": "santacittā samāhitā;",
  "bv2:68.5_0": "Bodhi tassa bhagavato,",
  "bv2:68.6_0": "assatthoti pavuccati.",
  "bv2:69.1_0": "Citto ca hatthāḷavako,",
  "bv2:69.2_0": "aggā hessantupaṭṭhakā;",
  "bv2:69.3_0": "Uttarā nandamātā ca,",
  "bv2:69.4_0": "aggā hessantupaṭṭhikā’.",
  "bv2:70.1_0": "Idaṁ sutvāna vacanaṁ,",
  "bv2:70.2_0": "asamassa mahesino;",
  "bv2:70.3_0": "Āmoditā naramarū,",
  "bv2:70.4_0": "buddhabījaṁ kira ayaṁ.",
  "bv2:71.1_0": "Ukkuṭṭhisaddā vattanti,",
  "bv2:71.2_0": "apphoṭenti hasanti ca;",
  "bv2:71.3_0": "Katañjalī namassanti,",
  "bv2:71.4_0": "dasasahassī sadevakā.",
  "bv2:72.1_0": "‘Yadimassa lokanāthassa,",
  "bv2:72.2_0": "virajjhissāma sāsanaṁ;",
  "bv2:72.3_0": "Anāgatamhi addhāne,",
  "bv2:72.4_0": "hessāma sammukhā imaṁ.",
  "bv2:73.1_0": "Yathā manussā nadiṁ tarantā,",
  "bv2:73.2_0": "Paṭititthaṁ virajjhiya;",
  "bv2:73.3_0": "Heṭṭhātitthe gahetvāna,",
  "bv2:73.4_0": "Uttaranti mahānadiṁ.",
  "bv2:74.1_0": "Evamevaṁ mayaṁ sabbe,",
  "bv2:74.2_0": "yadi muñcāmimaṁ jinaṁ;",
  "bv2:74.3_0": "Anāgatamhi addhāne,",
  "bv2:74.4_0": "hessāma sammukhā imaṁ’.",
  "bv2:75.1_0": "Dīpaṅkaro lokavidū,",
  "bv2:75.2_0": "āhutīnaṁ paṭiggaho;",
  "bv2:75.3_0": "Mama kammaṁ pakittetvā,",
  "bv2:75.4_0": "dakkhiṇaṁ pādamuddhari.",
  "bv2:76.1_0": "Ye tatthāsuṁ jinaputtā,",
  "bv2:76.2_0": "Padakkhiṇamakaṁsu maṁ;",
  "bv2:76.3_0": "Devā manussā asurā ca,",
  "bv2:76.4_0": "Abhivādetvāna pakkamuṁ.",
  "bv2:77.1_0": "Dassanaṁ me atikkante,",
  "bv2:77.2_0": "sasaṅghe lokanāyake;",
  "bv2:77.3_0": "Sayanā vuṭṭhahitvāna,",
  "bv2:77.4_0": "pallaṅkaṁ ābhujiṁ tadā.",
  "bv2:78.1_0": "Sukhena sukhito homi,",
  "bv2:78.2_0": "pāmojjena pamodito;",
  "bv2:78.3_0": "Pītiyā ca abhissanno,",
  "bv2:78.4_0": "pallaṅkaṁ ābhujiṁ tadā.",
  "bv2:79.1_0": "Pallaṅkena nisīditvā,",
  "bv2:79.2_0": "evaṁ cintesahaṁ tadā;",
  "bv2:79.3_0": "‘Vasībhūto ahaṁ jhāne,",
  "bv2:79.4_0": "abhiññāsu pāramiṅgato.",
  "bv2:80.1_0": "Sahassiyamhi lokamhi,",
  "bv2:80.2_0": "isayo natthi me samā;",
  "bv2:80.3_0": "Asamo iddhidhammesu,",
  "bv2:80.4_0": "alabhiṁ īdisaṁ sukhaṁ’.",
  "bv2:81.1_0": "Pallaṅkābhujane mayhaṁ,",
  "bv2:81.2_0": "dasasahassādhivāsino;",
  "bv2:81.3_0": "Mahānādaṁ pavattesuṁ,",
  "bv2:81.4_0": "‘dhuvaṁ buddho bhavissasi.",
  "bv2:82.1_0": "Yā pubbe bodhisattānaṁ,",
  "bv2:82.2_0": "pallaṅkavaramābhuje;",
  "bv2:82.3_0": "Nimittāni padissanti,",
  "bv2:82.4_0": "tāni ajja padissare.",
  "bv2:83.1_0": "Sītaṁ byapagataṁ hoti,",
  "bv2:83.2_0": "uṇhañca upasammati;",
  "bv2:83.3_0": "Tāni ajja padissanti,",
  "bv2:83.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:84.1_0": "Dasasahassī lokadhātū,",
  "bv2:84.2_0": "nissaddā honti nirākulā;",
  "bv2:84.3_0": "Tāni ajja padissanti,",
  "bv2:84.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:85.1_0": "Mahāvātā na vāyanti,",
  "bv2:85.2_0": "na sandanti savantiyo;",
  "bv2:85.3_0": "Tāni ajja padissanti,",
  "bv2:85.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:86.1_0": "Thalajā dakajā pupphā,",
  "bv2:86.2_0": "sabbe pupphanti tāvade;",
  "bv2:86.3_0": "Tepajja pupphitā sabbe,",
  "bv2:86.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:87.1_0": "Latā vā yadi vā rukkhā,",
  "bv2:87.2_0": "phalabhārā honti tāvade;",
  "bv2:87.3_0": "Tepajja phalitā sabbe,",
  "bv2:87.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:88.1_0": "Ākāsaṭṭhā ca bhūmaṭṭhā,",
  "bv2:88.2_0": "ratanā jotanti tāvade;",
  "bv2:88.3_0": "Tepajja ratanā jotanti,",
  "bv2:88.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:89.1_0": "Mānussakā ca dibbā ca,",
  "bv2:89.2_0": "turiyā vajjanti tāvade;",
  "bv2:89.3_0": "Tepajjubho abhiravanti,",
  "bv2:89.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:90.1_0": "Vicitrapupphā gaganā,",
  "bv2:90.2_0": "abhivassanti tāvade;",
  "bv2:90.3_0": "Tepi ajja pavassanti,",
  "bv2:90.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:91.1_0": "Mahāsamuddo ābhujati,",
  "bv2:91.2_0": "dasasahassī pakampati;",
  "bv2:91.3_0": "Tepajjubho abhiravanti,",
  "bv2:91.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:92.1_0": "Nirayepi dasasahasse,",
  "bv2:92.2_0": "aggī nibbanti tāvade;",
  "bv2:92.3_0": "Tepajja nibbutā aggī,",
  "bv2:92.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:93.1_0": "Vimalo hoti sūriyo,",
  "bv2:93.2_0": "sabbā dissanti tārakā;",
  "bv2:93.3_0": "Tepi ajja padissanti,",
  "bv2:93.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:94.1_0": "Anovaṭṭhena udakaṁ,",
  "bv2:94.2_0": "mahiyā ubbhijji tāvade;",
  "bv2:94.3_0": "Tampajjubbhijjate mahiyā,",
  "bv2:94.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:95.1_0": "Tārāgaṇā virocanti,",
  "bv2:95.2_0": "nakkhattā gaganamaṇḍale;",
  "bv2:95.3_0": "Visākhā candimāyuttā,",
  "bv2:95.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:96.1_0": "Bilāsayā darīsayā,",
  "bv2:96.2_0": "nikkhamanti sakāsayā;",
  "bv2:96.3_0": "Tepajja āsayā chuddhā,",
  "bv2:96.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:97.1_0": "Na honti aratī sattānaṁ,",
  "bv2:97.2_0": "santuṭṭhā honti tāvade;",
  "bv2:97.3_0": "Tepajja sabbe santuṭṭhā,",
  "bv2:97.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:98.1_0": "Rogā tadupasammanti,",
  "bv2:98.2_0": "jighacchā ca vinassati;",
  "bv2:98.3_0": "Tāni ajja padissanti,",
  "bv2:98.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:99.1_0": "Rāgo tadā tanu hoti,",
  "bv2:99.2_0": "doso moho vinassati;",
  "bv2:99.3_0": "Tepajja vigatā sabbe,",
  "bv2:99.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:100.1_0": "Bhayaṁ tadā na bhavati,",
  "bv2:100.2_0": "ajjapetaṁ padissati;",
  "bv2:100.3_0": "Tena liṅgena jānāma,",
  "bv2:100.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:101.1_0": "Rajonuddhaṁsati uddhaṁ,",
  "bv2:101.2_0": "ajjapetaṁ padissati;",
  "bv2:101.3_0": "Tena liṅgena jānāma,",
  "bv2:101.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:102.1_0": "Aniṭṭhagandho pakkamati,",
  "bv2:102.2_0": "dibbagandho pavāyati;",
  "bv2:102.3_0": "Sopajja vāyati gandho,",
  "bv2:102.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:103.1_0": "Sabbe devā padissanti,",
  "bv2:103.2_0": "ṭhapayitvā arūpino;",
  "bv2:103.3_0": "Tepajja sabbe dissanti,",
  "bv2:103.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:104.1_0": "Yāvatā nirayā nāma,",
  "bv2:104.2_0": "sabbe dissanti tāvade;",
  "bv2:104.3_0": "Tepajja sabbe dissanti,",
  "bv2:104.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:105.1_0": "Kuṭṭā kavāṭā selā ca,",
  "bv2:105.2_0": "na hontāvaraṇā tadā;",
  "bv2:105.3_0": "Ākāsabhūtā tepajja,",
  "bv2:105.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:106.1_0": "Cutī ca upapatti ca,",
  "bv2:106.2_0": "khaṇe tasmiṁ na vijjati;",
  "bv2:106.3_0": "Tānipajja padissanti,",
  "bv2:106.4_0": "dhuvaṁ buddho bhavissasi.",
  "bv2:107.1_0": "Daḷhaṁ paggaṇha vīriyaṁ,",
  "bv2:107.2_0": "mā nivatta abhikkama;",
  "bv2:107.3_0": "Mayampetaṁ vijānāma,",
  "bv2:107.4_0": "dhuvaṁ buddho bhavissasi’.",
  "bv2:108.1_0": "Buddhassa vacanaṁ sutvā,",
  "bv2:108.2_0": "dasasahassīna cūbhayaṁ;",
  "bv2:108.3_0": "Tuṭṭhahaṭṭho pamodito,",
  "bv2:108.4_0": "evaṁ cintesahaṁ tadā.",
  "bv2:109.1_0": "‘Advejjhavacanā buddhā,",
  "bv2:109.2_0": "Amoghavacanā jinā;",
  "bv2:109.3_0": "Vitathaṁ natthi buddhānaṁ,",
  "bv2:109.4_0": "Dhuvaṁ buddho bhavāmahaṁ.",
  "bv2:110.1_0": "Yathā khittaṁ nabhe leḍḍu,",
  "bv2:110.2_0": "Dhuvaṁ patati bhūmiyaṁ;",
  "bv2:110.3_0": "Tatheva buddhaseṭṭhānaṁ,",
  "bv2:110.4_0": "Vacanaṁ dhuvasassataṁ;",
  "bv2:110.5_0": "Vitathaṁ natthi buddhānaṁ,",
  "bv2:110.6_0": "Dhuvaṁ buddho bhavāmahaṁ.",
  "bv2:111.1_0": "Yathāpi sabbasattānaṁ,",
  "bv2:111.2_0": "Maraṇaṁ dhuvasassataṁ;",
  "bv2:111.3_0": "Tatheva buddhaseṭṭhānaṁ,",
  "bv2:111.4_0": "Vacanaṁ dhuvasassataṁ;",
  "bv2:111.5_0": "Vitathaṁ natthi buddhānaṁ,",
  "bv2:111.6_0": "Dhuvaṁ buddho bhavāmahaṁ.",
  "bv2:112.1_0": "Yathā rattikkhaye patte,",
  "bv2:112.2_0": "Sūriyuggamanaṁ dhuvaṁ;",
  "bv2:112.3_0": "Tatheva buddhaseṭṭhānaṁ,",
  "bv2:112.4_0": "Vacanaṁ dhuvasassataṁ;",
  "bv2:112.5_0": "Vitathaṁ natthi buddhānaṁ,",
  "bv2:112.6_0": "Dhuvaṁ buddho bhavāmahaṁ.",
  "bv2:113.1_0": "Yathā nikkhantasayanassa,",
  "bv2:113.2_0": "Sīhassa nadanaṁ dhuvaṁ;",
  "bv2:113.3_0": "Tatheva buddhaseṭṭhānaṁ,",
  "bv2:113.4_0": "Vacanaṁ dhuvasassataṁ;",
  "bv2:113.5_0": "Vitathaṁ natthi buddhānaṁ,",
  "bv2:113.6_0": "Dhuvaṁ buddho bhavāmahaṁ.",
  "bv2:114.1_0": "Yathā āpannasattānaṁ,",
  "bv2:114.2_0": "Bhāramoropanaṁ dhuvaṁ;",
  "bv2:114.3_0": "Tatheva buddhaseṭṭhānaṁ,",
  "bv2:114.4_0": "Vacanaṁ dhuvasassataṁ;",
  "bv2:114.5_0": "Vitathaṁ natthi buddhānaṁ,",
  "bv2:114.6_0": "Dhuvaṁ buddho bhavāmahaṁ.",
  "bv2:115.1_0": "Handa buddhakare dhamme,",
  "bv2:115.2_0": "vicināmi ito cito;",
  "bv2:115.3_0": "Uddhaṁ adho dasa disā,",
  "bv2:115.4_0": "yāvatā dhammadhātuyā’.",
  "bv2:116.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:116.2_0": "paṭhamaṁ **dānapāramiṁ**;",
  "bv2:116.3_0": "Pubbakehi mahesīhi,",
  "bv2:116.4_0": "anuciṇṇaṁ mahāpathaṁ.",
  "bv2:117.1_0": "‘Imaṁ tvaṁ paṭhamaṁ tāva,",
  "bv2:117.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:117.3_0": "Dānapāramitaṁ gaccha,",
  "bv2:117.4_0": "yadi bodhiṁ pattumicchasi.",
  "bv2:118.1_0": "Yathāpi kumbho sampuṇṇo,",
  "bv2:118.2_0": "yassa kassaci adhokato;",
  "bv2:118.3_0": "Vamatevudakaṁ nissesaṁ,",
  "bv2:118.4_0": "na tattha parirakkhati.",
  "bv2:119.1_0": "Tatheva yācake disvā,",
  "bv2:119.2_0": "hīnamukkaṭṭhamajjhime;",
  "bv2:119.3_0": "Dadāhi dānaṁ nissesaṁ,",
  "bv2:119.4_0": "kumbho viya adhokato.",
  "bv2:120.1_0": "Na hete ettakāyeva,",
  "bv2:120.2_0": "buddhadhammā bhavissare;",
  "bv2:120.3_0": "Aññepi vicinissāmi,",
  "bv2:120.4_0": "ye dhammā bodhipācanā’.",
  "bv2:121.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:121.2_0": "dutiyaṁ **sīlapāramiṁ**;",
  "bv2:121.3_0": "Pubbakehi mahesīhi,",
  "bv2:121.4_0": "āsevitanisevitaṁ.",
  "bv2:122.1_0": "‘Imaṁ tvaṁ dutiyaṁ tāva,",
  "bv2:122.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:122.3_0": "Sīlapāramitaṁ gaccha,",
  "bv2:122.4_0": "yadi bodhiṁ pattumicchasi.",
  "bv2:123.1_0": "Yathāpi camarī vālaṁ,",
  "bv2:123.2_0": "kismiñci paṭilaggitaṁ;",
  "bv2:123.3_0": "Upeti maraṇaṁ tattha,",
  "bv2:123.4_0": "na vikopeti vāladhiṁ.",
  "bv2:124.1_0": "Tatheva tvaṁ catūsu bhūmīsu,",
  "bv2:124.2_0": "Sīlāni paripūraya;",
  "bv2:124.3_0": "Parirakkha sabbadā sīlaṁ,",
  "bv2:124.4_0": "Camarī viya vāladhiṁ.",
  "bv2:125.1_0": "Na hete ettakāyeva,",
  "bv2:125.2_0": "buddhadhammā bhavissare;",
  "bv2:125.3_0": "Aññepi vicinissāmi,",
  "bv2:125.4_0": "ye dhammā bodhipācanā’.",
  "bv2:126.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:126.2_0": "tatiyaṁ **nekkhammapāramiṁ**;",
  "bv2:126.3_0": "Pubbakehi mahesīhi,",
  "bv2:126.4_0": "āsevitanisevitaṁ.",
  "bv2:127.1_0": "‘Imaṁ tvaṁ tatiyaṁ tāva,",
  "bv2:127.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:127.3_0": "Nekkhammapāramitaṁ gaccha,",
  "bv2:127.4_0": "yadi bodhiṁ pattumicchasi.",
  "bv2:128.1_0": "Yathā andughare puriso,",
  "bv2:128.2_0": "ciravuttho dukhaṭṭito;",
  "bv2:128.3_0": "Na tattha rāgaṁ janesi,",
  "bv2:128.4_0": "muttiṁyeva gavesati.",
  "bv2:129.1_0": "Tatheva tvaṁ sabbabhave,",
  "bv2:129.2_0": "passa andughare viya;",
  "bv2:129.3_0": "Nekkhammābhimukho hohi,",
  "bv2:129.4_0": "bhavato parimuttiyā.",
  "bv2:130.1_0": "Na hete ettakāyeva,",
  "bv2:130.2_0": "buddhadhammā bhavissare;",
  "bv2:130.3_0": "Aññepi vicinissāmi,",
  "bv2:130.4_0": "ye dhammā bodhipācanā’.",
  "bv2:131.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:131.2_0": "catutthaṁ **paññāpāramiṁ**;",
  "bv2:131.3_0": "Pubbakehi mahesīhi,",
  "bv2:131.4_0": "āsevitanisevitaṁ.",
  "bv2:132.1_0": "‘Imaṁ tvaṁ catutthaṁ tāva,",
  "bv2:132.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:132.3_0": "Paññāpāramitaṁ gaccha,",
  "bv2:132.4_0": "yadi bodhiṁ pattumicchasi.",
  "bv2:133.1_0": "Yathāpi bhikkhu bhikkhanto,",
  "bv2:133.2_0": "hīnamukkaṭṭhamajjhime;",
  "bv2:133.3_0": "Kulāni na vivajjento,",
  "bv2:133.4_0": "evaṁ labhati yāpanaṁ.",
  "bv2:134.1_0": "Tatheva tvaṁ sabbakālaṁ,",
  "bv2:134.2_0": "paripucchaṁ budhaṁ janaṁ;",
  "bv2:134.3_0": "Paññāpāramitaṁ gantvā,",
  "bv2:134.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:135.1_0": "Na hete ettakāyeva,",
  "bv2:135.2_0": "buddhadhammā bhavissare;",
  "bv2:135.3_0": "Aññepi vicinissāmi,",
  "bv2:135.4_0": "ye dhammā bodhipācanā’.",
  "bv2:136.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:136.2_0": "pañcamaṁ **vīriyapāramiṁ**;",
  "bv2:136.3_0": "Pubbakehi mahesīhi,",
  "bv2:136.4_0": "āsevitanisevitaṁ.",
  "bv2:137.1_0": "‘Imaṁ tvaṁ pañcamaṁ tāva,",
  "bv2:137.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:137.3_0": "Vīriyapāramitaṁ gaccha,",
  "bv2:137.4_0": "yadi bodhiṁ pattumicchasi.",
  "bv2:138.1_0": "Yathāpi sīho migarājā,",
  "bv2:138.2_0": "nisajjaṭṭhānacaṅkame;",
  "bv2:138.3_0": "Alīnavīriyo hoti,",
  "bv2:138.4_0": "paggahitamano sadā.",
  "bv2:139.1_0": "Tatheva tvaṁ sabbabhave,",
  "bv2:139.2_0": "paggaṇha vīriyaṁ daḷhaṁ;",
  "bv2:139.3_0": "Vīriyapāramitaṁ gantvā,",
  "bv2:139.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:140.1_0": "Na hete ettakāyeva,",
  "bv2:140.2_0": "buddhadhammā bhavissare;",
  "bv2:140.3_0": "Aññepi vicinissāmi,",
  "bv2:140.4_0": "ye dhammā bodhipācanā’.",
  "bv2:141.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:141.2_0": "chaṭṭhamaṁ **khantipāramiṁ**;",
  "bv2:141.3_0": "Pubbakehi mahesīhi,",
  "bv2:141.4_0": "āsevitanisevitaṁ.",
  "bv2:142.1_0": "‘Imaṁ tvaṁ chaṭṭhamaṁ tāva,",
  "bv2:142.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:142.3_0": "Tattha advejjhamānaso,",
  "bv2:142.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:143.1_0": "Yathāpi pathavī nāma,",
  "bv2:143.2_0": "sucimpi asucimpi ca;",
  "bv2:143.3_0": "Sabbaṁ sahati nikkhepaṁ,",
  "bv2:143.4_0": "na karoti paṭighaṁ tayā.",
  "bv2:144.1_0": "Tatheva tvampi sabbesaṁ,",
  "bv2:144.2_0": "sammānāvamānakkhamo;",
  "bv2:144.3_0": "Khantipāramitaṁ gantvā,",
  "bv2:144.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:145.1_0": "Na hete ettakāyeva,",
  "bv2:145.2_0": "buddhadhammā bhavissare;",
  "bv2:145.3_0": "Aññepi vicinissāmi,",
  "bv2:145.4_0": "ye dhammā bodhipācanā’.",
  "bv2:146.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:146.2_0": "sattamaṁ **saccapāramiṁ**;",
  "bv2:146.3_0": "Pubbakehi mahesīhi,",
  "bv2:146.4_0": "āsevitanisevitaṁ.",
  "bv2:147.1_0": "‘Imaṁ tvaṁ sattamaṁ tāva,",
  "bv2:147.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:147.3_0": "Tattha advejjhavacano,",
  "bv2:147.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:148.1_0": "Yathāpi osadhī nāma,",
  "bv2:148.2_0": "tulābhūtā sadevake;",
  "bv2:148.3_0": "Samaye utuvasse vā,",
  "bv2:148.4_0": "na vokkamati vīthito.",
  "bv2:149.1_0": "Tatheva tvampi saccesu,",
  "bv2:149.2_0": "mā vokkama hi vīthito;",
  "bv2:149.3_0": "Saccapāramitaṁ gantvā,",
  "bv2:149.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:150.1_0": "Na hete ettakāyeva,",
  "bv2:150.2_0": "buddhadhammā bhavissare;",
  "bv2:150.3_0": "Aññepi vicinissāmi,",
  "bv2:150.4_0": "ye dhammā bodhipācanā’.",
  "bv2:151.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:151.2_0": "Aṭṭhamaṁ **adhiṭṭhānapāramiṁ**;",
  "bv2:151.3_0": "Pubbakehi mahesīhi,",
  "bv2:151.4_0": "Āsevitanisevitaṁ.",
  "bv2:152.1_0": "‘Imaṁ tvaṁ aṭṭhamaṁ tāva,",
  "bv2:152.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:152.3_0": "Tattha tvaṁ acalo hutvā,",
  "bv2:152.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:153.1_0": "Yathāpi pabbato selo,",
  "bv2:153.2_0": "acalo suppatiṭṭhito;",
  "bv2:153.3_0": "Na kampati bhusavātehi,",
  "bv2:153.4_0": "sakaṭṭhāneva tiṭṭhati.",
  "bv2:154.1_0": "Tatheva tvampi adhiṭṭhāne,",
  "bv2:154.2_0": "Sabbadā acalo bhava;",
  "bv2:154.3_0": "Adhiṭṭhānapāramitaṁ gantvā,",
  "bv2:154.4_0": "Sambodhiṁ pāpuṇissasi.",
  "bv2:155.1_0": "Na hete ettakāyeva,",
  "bv2:155.2_0": "buddhadhammā bhavissare;",
  "bv2:155.3_0": "Aññepi vicinissāmi,",
  "bv2:155.4_0": "ye dhammā bodhipācanā’.",
  "bv2:156.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:156.2_0": "navamaṁ **mettāpāramiṁ**;",
  "bv2:156.3_0": "Pubbakehi mahesīhi,",
  "bv2:156.4_0": "āsevitanisevitaṁ.",
  "bv2:157.1_0": "‘Imaṁ tvaṁ navamaṁ tāva,",
  "bv2:157.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:157.3_0": "Mettāya asamo hohi,",
  "bv2:157.4_0": "yadi bodhiṁ pattumicchasi.",
  "bv2:158.1_0": "Yathāpi udakaṁ nāma,",
  "bv2:158.2_0": "kalyāṇe pāpake jane;",
  "bv2:158.3_0": "Samaṁ pharati sītena,",
  "bv2:158.4_0": "pavāheti rajomalaṁ.",
  "bv2:159.1_0": "Tatheva tvaṁ hitāhite,",
  "bv2:159.2_0": "samaṁ mettāya bhāvaya;",
  "bv2:159.3_0": "Mettāpāramitaṁ gantvā,",
  "bv2:159.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:160.1_0": "Na hete ettakāyeva,",
  "bv2:160.2_0": "buddhadhammā bhavissare;",
  "bv2:160.3_0": "Aññepi vicinissāmi,",
  "bv2:160.4_0": "ye dhammā bodhipācanā’.",
  "bv2:161.1_0": "Vicinanto tadā dakkhiṁ,",
  "bv2:161.2_0": "dasamaṁ **upekkhāpāramiṁ**;",
  "bv2:161.3_0": "Pubbakehi mahesīhi,",
  "bv2:161.4_0": "āsevitanisevitaṁ.",
  "bv2:162.1_0": "‘Imaṁ tvaṁ dasamaṁ tāva,",
  "bv2:162.2_0": "daḷhaṁ katvā samādiya;",
  "bv2:162.3_0": "Tulābhūto daḷho hutvā,",
  "bv2:162.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:163.1_0": "Yathāpi pathavī nāma,",
  "bv2:163.2_0": "nikkhittaṁ asuciṁ suciṁ;",
  "bv2:163.3_0": "Upekkhati ubhopete,",
  "bv2:163.4_0": "kopānunayavajjitā.",
  "bv2:164.1_0": "Tatheva tvaṁ sukhadukkhe,",
  "bv2:164.2_0": "tulābhūto sadā bhava;",
  "bv2:164.3_0": "Upekkhāpāramitaṁ gantvā,",
  "bv2:164.4_0": "sambodhiṁ pāpuṇissasi.",
  "bv2:165.1_0": "Ettakāyeva te loke,",
  "bv2:165.2_0": "ye dhammā bodhipācanā;",
  "bv2:165.3_0": "Tatuddhaṁ natthi aññatra,",
  "bv2:165.4_0": "daḷhaṁ tattha patiṭṭhaha’.",
  "bv2:166.1_0": "Ime dhamme sammasato,",
  "bv2:166.2_0": "sabhāvasarasalakkhaṇe;",
  "bv2:166.3_0": "Dhammatejena vasudhā,",
  "bv2:166.4_0": "dasasahassī pakampatha.",
  "bv2:167.1_0": "Calatī ravatī pathavī,",
  "bv2:167.2_0": "ucchuyantaṁva pīḷitaṁ;",
  "bv2:167.3_0": "Telayante yathā cakkaṁ,",
  "bv2:167.4_0": "evaṁ kampati medanī.",
  "bv2:168.1_0": "Yāvatā parisā āsi,",
  "bv2:168.2_0": "buddhassa parivesane;",
  "bv2:168.3_0": "Pavedhamānā sā tattha,",
  "bv2:168.4_0": "mucchitā seti bhūmiyaṁ.",
  "bv2:169.1_0": "Ghaṭānekasahassāni,",
  "bv2:169.2_0": "kumbhīnañca satā bahū;",
  "bv2:169.3_0": "Sañcuṇṇamathitā tattha,",
  "bv2:169.4_0": "aññamaññaṁ paghaṭṭitā.",
  "bv2:170.1_0": "Ubbiggā tasitā bhītā,",
  "bv2:170.2_0": "bhantā byathitamānasā;",
  "bv2:170.3_0": "Mahājanā samāgamma,",
  "bv2:170.4_0": "dīpaṅkaramupāgamuṁ.",
  "bv2:171.1_0": "‘Kiṁ bhavissati lokassa,",
  "bv2:171.2_0": "kalyāṇamatha pāpakaṁ;",
  "bv2:171.3_0": "Sabbo upadduto loko,",
  "bv2:171.4_0": "taṁ vinodehi cakkhuma’.",
  "bv2:172.1_0": "Tesaṁ tadā saññapesi,",
  "bv2:172.2_0": "dīpaṅkaro mahāmuni;",
  "bv2:172.3_0": "‘Visaṭṭhā hotha mā bhetha,",
  "bv2:172.4_0": "imasmiṁ pathavikampane.",
  "bv2:173.1_0": "Yamahaṁ ajja byākāsiṁ,",
  "bv2:173.2_0": "buddho loke bhavissati;",
  "bv2:173.3_0": "Eso sammasati dhammaṁ,",
  "bv2:173.4_0": "pubbakaṁ jinasevitaṁ.",
  "bv2:174.1_0": "Tassa sammasato dhammaṁ,",
  "bv2:174.2_0": "buddhabhūmiṁ asesato;",
  "bv2:174.3_0": "Tenāyaṁ kampitā pathavī,",
  "bv2:174.4_0": "dasasahassī sadevake’.",
  "bv2:175.1_0": "Buddhassa vacanaṁ sutvā,",
  "bv2:175.2_0": "mano nibbāyi tāvade;",
  "bv2:175.3_0": "Sabbe maṁ upasaṅkamma,",
  "bv2:175.4_0": "punāpi abhivandisuṁ.",
  "bv2:176.1_0": "Samādiyitvā buddhaguṇaṁ,",
  "bv2:176.2_0": "daḷhaṁ katvāna mānasaṁ;",
  "bv2:176.3_0": "Dīpaṅkaraṁ namassitvā,",
  "bv2:176.4_0": "āsanā vuṭṭhahiṁ tadā.",
  "bv2:177.1_0": "Dibbaṁ mānusakaṁ pupphaṁ,",
  "bv2:177.2_0": "devā mānusakā ubho;",
  "bv2:177.3_0": "Samokiranti pupphehi,",
  "bv2:177.4_0": "vuṭṭhahantassa āsanā.",
  "bv2:178.1_0": "Vedayanti ca te sotthiṁ,",
  "bv2:178.2_0": "devā mānusakā ubho;",
  "bv2:178.3_0": "‘Mahantaṁ patthitaṁ tuyhaṁ,",
  "bv2:178.4_0": "taṁ labhassu yathicchitaṁ.",
  "bv2:179.1_0": "Sabbītiyo vivajjantu,",
  "bv2:179.2_0": "Soko rogo vinassatu;",
  "bv2:179.3_0": "Mā te bhavantvantarāyā,",
  "bv2:179.4_0": "Phusa khippaṁ bodhimuttamaṁ.",
  "bv2:180.1_0": "Yathāpi samaye patte,",
  "bv2:180.2_0": "pupphanti pupphino dumā;",
  "bv2:180.3_0": "Tatheva tvaṁ mahāvīra,",
  "bv2:180.4_0": "buddhañāṇena pupphasi.",
  "bv2:181.1_0": "Yathā ye keci sambuddhā,",
  "bv2:181.2_0": "pūrayuṁ dasa pāramī;",
  "bv2:181.3_0": "Tatheva tvaṁ mahāvīra,",
  "bv2:181.4_0": "pūraya dasa pāramī.",
  "bv2:182.1_0": "Yathā ye keci sambuddhā,",
  "bv2:182.2_0": "bodhimaṇḍamhi bujjhare;",
  "bv2:182.3_0": "Tatheva tvaṁ mahāvīra,",
  "bv2:182.4_0": "bujjhassu jinabodhiyaṁ.",
  "bv2:183.1_0": "Yathā ye keci sambuddhā,",
  "bv2:183.2_0": "dhammacakkaṁ pavattayuṁ;",
  "bv2:183.3_0": "Tatheva tvaṁ mahāvīra,",
  "bv2:183.4_0": "dhammacakkaṁ pavattaya.",
  "bv2:184.1_0": "Puṇṇamāye yathā cando,",
  "bv2:184.2_0": "parisuddho virocati;",
  "bv2:184.3_0": "Tatheva tvaṁ puṇṇamano,",
  "bv2:184.4_0": "viroca dasasahassiyaṁ.",
  "bv2:185.1_0": "Rāhumutto yathā sūriyo,",
  "bv2:185.2_0": "tāpena atirocati;",
  "bv2:185.3_0": "Tatheva lokā muñcitvā,",
  "bv2:185.4_0": "viroca siriyā tuvaṁ.",
  "bv2:186.1_0": "Yathā yā kāci nadiyo,",
  "bv2:186.2_0": "osaranti mahodadhiṁ;",
  "bv2:186.3_0": "Evaṁ sadevakā lokā,",
  "bv2:186.4_0": "osarantu tavantike’.",
  "bv2:187.1_0": "Tehi thutappasattho so,",
  "bv2:187.2_0": "Dasa dhamme samādiya;",
  "bv2:187.3_0": "Te dhamme paripūrento,",
  "bv2:187.4_0": "Pavanaṁ pāvisī tadā”ti. ",
  "bv2:188.1_0": "Sumedhapatthanākathā niṭṭhitā."
}