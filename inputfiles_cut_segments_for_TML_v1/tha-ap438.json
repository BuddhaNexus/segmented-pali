{
  "tha-ap438:0.1_0": "Therāpadāna",
  "tha-ap438:0.2_0": "Ekavihārivagga",
  "tha-ap438:0.3_0": "6 Kaḷambadāyakattheraapadāna",
  "tha-ap438:1.1_0": "“Romaso nāma sambuddho,",
  "tha-ap438:1.2_0": "vasate pabbatantare;",
  "tha-ap438:1.3_0": "Kaḷambaṁ tassa pādāsiṁ,",
  "tha-ap438:1.4_0": "pasanno sehi pāṇibhi.",
  "tha-ap438:2.1_0": "Catunnavutito kappe,",
  "tha-ap438:2.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap438:2.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap438:2.4_0": "kaḷambassa idaṁ phalaṁ.",
  "tha-ap438:3.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap438:3.2_0": "…pe…",
  "tha-ap438:3.3_0": "viharāmi anāsavo.",
  "tha-ap438:4.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap438:4.2_0": "…pe…",
  "tha-ap438:4.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap438:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap438:5.2_0": "…pe…",
  "tha-ap438:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap438:6.1_0": "Itthaṁ sudaṁ āyasmā kaḷambadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap438:7.1_0": "Kaḷambadāyakattherassāpadānaṁ chaṭṭhaṁ."
}