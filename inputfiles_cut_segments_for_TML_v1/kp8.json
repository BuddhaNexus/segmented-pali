{
  "kp8:0.1_0": "Khuddakapāṭha",
  "kp8:0.2_0": "8. Nidhikaṇḍasutta",
  "kp8:1.1_0": "Nidhiṁ nidheti puriso,",
  "kp8:1.2_0": "gambhīre odakantike;",
  "kp8:1.3_0": "Atthe kicce samuppanne,",
  "kp8:1.4_0": "atthāya me bhavissati.",
  "kp8:2.1_0": "Rājato vā duruttassa,",
  "kp8:2.2_0": "corato pīḷitassa vā;",
  "kp8:2.3_0": "Iṇassa vā pamokkhāya,",
  "kp8:2.4_0": "dubbhikkhe āpadāsu vā;",
  "kp8:2.5_0": "Etadatthāya lokasmiṁ,",
  "kp8:2.6_0": "nidhi nāma nidhīyati.",
  "kp8:3.1_0": "Tāvassunihito santo,",
  "kp8:3.2_0": "gambhīre odakantike;",
  "kp8:3.3_0": "Na sabbo sabbadā eva,",
  "kp8:3.4_0": "tassa taṁ upakappati.",
  "kp8:4.1_0": "Nidhi vā ṭhānā cavati,",
  "kp8:4.2_0": "saññā vāssa vimuyhati;",
  "kp8:4.3_0": "Nāgā vā apanāmenti,",
  "kp8:4.4_0": "yakkhā vāpi haranti naṁ.",
  "kp8:5.1_0": "Appiyā vāpi dāyādā,",
  "kp8:5.2_0": "uddharanti apassato;",
  "kp8:5.3_0": "Yadā puññakkhayo hoti,",
  "kp8:5.4_0": "sabbametaṁ vinassati.",
  "kp8:6.1_0": "Yassa dānena sīlena,",
  "kp8:6.2_0": "saṁyamena damena ca;",
  "kp8:6.3_0": "Nidhī sunihito hoti,",
  "kp8:6.4_0": "itthiyā purisassa vā.",
  "kp8:7.1_0": "Cetiyamhi ca saṅghe vā,",
  "kp8:7.2_0": "puggale atithīsu vā;",
  "kp8:7.3_0": "Mātari pitari cāpi,",
  "kp8:7.4_0": "atho jeṭṭhamhi bhātari.",
  "kp8:8.1_0": "Eso nidhi sunihito,",
  "kp8:8.2_0": "ajeyyo anugāmiko;",
  "kp8:8.3_0": "Pahāya gamanīyesu,",
  "kp8:8.4_0": "etaṁ ādāya gacchati.",
  "kp8:9.1_0": "Asādhāraṇamaññesaṁ,",
  "kp8:9.2_0": "acorāharaṇo nidhi;",
  "kp8:9.3_0": "Kayirātha dhīro puññāni,",
  "kp8:9.4_0": "yo nidhi anugāmiko.",
  "kp8:10.1_0": "Esa devamanussānaṁ,",
  "kp8:10.2_0": "sabbakāmadado nidhi;",
  "kp8:10.3_0": "Yaṁ yadevābhipatthenti,",
  "kp8:10.4_0": "sabbametena labbhati.",
  "kp8:11.1_0": "Suvaṇṇatā susaratā,",
  "kp8:11.2_0": "susaṇṭhānā surūpatā;",
  "kp8:11.3_0": "Ādhipaccaparivāro,",
  "kp8:11.4_0": "sabbametena labbhati.",
  "kp8:12.1_0": "Padesarajjaṁ issariyaṁ,",
  "kp8:12.2_0": "cakkavattisukhaṁ piyaṁ;",
  "kp8:12.3_0": "Devarajjampi dibbesu,",
  "kp8:12.4_0": "sabbametena labbhati.",
  "kp8:13.1_0": "Mānussikā ca sampatti,",
  "kp8:13.2_0": "devaloke ca yā rati;",
  "kp8:13.3_0": "Yā ca nibbānasampatti,",
  "kp8:13.4_0": "sabbametena labbhati.",
  "kp8:14.1_0": "Mittasampadamāgamma,",
  "kp8:14.2_0": "yonisova payuñjato;",
  "kp8:14.3_0": "Vijjāvimuttivasībhāvo,",
  "kp8:14.4_0": "sabbametena labbhati.",
  "kp8:15.1_0": "Paṭisambhidā vimokkhā ca,",
  "kp8:15.2_0": "yā ca sāvakapāramī;",
  "kp8:15.3_0": "Paccekabodhi buddhabhūmi,",
  "kp8:15.4_0": "sabbametena labbhati.",
  "kp8:16.1_0": "Evaṁ mahatthikā esā,",
  "kp8:16.2_0": "yadidaṁ puññasampadā;",
  "kp8:16.3_0": "Tasmā dhīrā pasaṁsanti,",
  "kp8:16.4_0": "paṇḍitā katapuññatanti.",
  "kp8:17.1_0": "Nidhikaṇḍasuttaṁ."
}