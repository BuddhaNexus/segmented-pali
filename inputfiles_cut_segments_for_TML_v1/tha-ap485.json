{
  "tha-ap485:0.1_0": "Therāpadāna",
  "tha-ap485:0.2_0": "Paṁsukūlavagga",
  "tha-ap485:0.3_0": "3. Bhisadāyakattheraapadāna",
  "tha-ap485:1.1_0": "“Ogayha yaṁ pokkharaṇiṁ,",
  "tha-ap485:1.2_0": "nānākuñjarasevitaṁ;",
  "tha-ap485:1.3_0": "Uddharāmi bhisaṁ tattha,",
  "tha-ap485:1.4_0": "ghāsahetu ahaṁ tadā.",
  "tha-ap485:2.1_0": "Bhagavā tamhi samaye,",
  "tha-ap485:2.2_0": "padumuttarasavhayo;",
  "tha-ap485:2.3_0": "Rattambaradharo buddho,",
  "tha-ap485:2.4_0": "gacchati anilañjase.",
  "tha-ap485:3.1_0": "Dhunanto paṁsukūlāni,",
  "tha-ap485:3.2_0": "saddamassosahaṁ tadā;",
  "tha-ap485:3.3_0": "Uddhaṁ nijjhāyamānohaṁ,",
  "tha-ap485:3.4_0": "addasaṁ lokanāyakaṁ.",
  "tha-ap485:4.1_0": "Tattheva ṭhitako santo,",
  "tha-ap485:4.2_0": "āyāciṁ lokanāyakaṁ;",
  "tha-ap485:4.3_0": "‘Madhuṁ bhisehi savati,",
  "tha-ap485:4.4_0": "khīraṁ sappiṁ muḷālibhi.",
  "tha-ap485:5.1_0": "Paṭiggaṇhātu me buddho,",
  "tha-ap485:5.2_0": "anukampāya cakkhumā’;",
  "tha-ap485:5.3_0": "Tato kāruṇiko satthā,",
  "tha-ap485:5.4_0": "oruhitvā mahāyaso.",
  "tha-ap485:6.1_0": "Paṭiggaṇhi mamaṁ bhikkhaṁ,",
  "tha-ap485:6.2_0": "anukampāya cakkhumā;",
  "tha-ap485:6.3_0": "Paṭiggahetvā sambuddho,",
  "tha-ap485:6.4_0": "akā me anumodanaṁ.",
  "tha-ap485:7.1_0": "‘Sukhī hotu mahāpuñña,",
  "tha-ap485:7.2_0": "gati tuyhaṁ samijjhatu;",
  "tha-ap485:7.3_0": "Iminā bhisadānena,",
  "tha-ap485:7.4_0": "labhassu vipulaṁ sukhaṁ’.",
  "tha-ap485:8.1_0": "Idaṁ vatvāna sambuddho,",
  "tha-ap485:8.2_0": "jalajuttamanāmako;",
  "tha-ap485:8.3_0": "Bhikkhamādāya sambuddho,",
  "tha-ap485:8.4_0": "ambarenāgamā jino.",
  "tha-ap485:9.1_0": "Tato bhisaṁ gahetvāna,",
  "tha-ap485:9.2_0": "āgacchiṁ mama assamaṁ;",
  "tha-ap485:9.3_0": "Bhisaṁ rukkhe lagetvāna,",
  "tha-ap485:9.4_0": "mama dānamanussariṁ.",
  "tha-ap485:10.1_0": "Mahāvāto vuṭṭhahitvā,",
  "tha-ap485:10.2_0": "sañcālesi vanaṁ tadā;",
  "tha-ap485:10.3_0": "Ākāso abhinādittha,",
  "tha-ap485:10.4_0": "asaniyā phalantiyā.",
  "tha-ap485:11.1_0": "Tato me asanīpāto,",
  "tha-ap485:11.2_0": "matthake nipatī tadā;",
  "tha-ap485:11.3_0": "Sohaṁ nisinnako santo,",
  "tha-ap485:11.4_0": "tattha kālaṅkato ahuṁ.",
  "tha-ap485:12.1_0": "Puññakammena saṁyutto,",
  "tha-ap485:12.2_0": "tusitaṁ upapajjahaṁ;",
  "tha-ap485:12.3_0": "Kaḷevaraṁ me patitaṁ,",
  "tha-ap485:12.4_0": "devaloke ramiṁ ahaṁ.",
  "tha-ap485:13.1_0": "Chaḷasītisahassāni,",
  "tha-ap485:13.2_0": "nāriyo samalaṅkatā;",
  "tha-ap485:13.3_0": "Sāyaṁ pātaṁ upaṭṭhanti,",
  "tha-ap485:13.4_0": "bhisadānassidaṁ phalaṁ.",
  "tha-ap485:14.1_0": "Manussayonimāgantvā,",
  "tha-ap485:14.2_0": "sukhito homahaṁ sadā;",
  "tha-ap485:14.3_0": "Bhoge me ūnatā natthi,",
  "tha-ap485:14.4_0": "bhisadānassidaṁ phalaṁ.",
  "tha-ap485:15.1_0": "Anukampitako tena,",
  "tha-ap485:15.2_0": "devadevena tādinā;",
  "tha-ap485:15.3_0": "Sabbāsavā parikkhīṇā,",
  "tha-ap485:15.4_0": "natthi dāni punabbhavo.",
  "tha-ap485:16.1_0": "Satasahassito kappe,",
  "tha-ap485:16.2_0": "yaṁ bhisaṁ adadiṁ tadā;",
  "tha-ap485:16.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap485:16.4_0": "bhisadānassidaṁ phalaṁ.",
  "tha-ap485:17.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap485:17.2_0": "…pe…",
  "tha-ap485:17.3_0": "viharāmi anāsavo.",
  "tha-ap485:18.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap485:18.2_0": "…pe…",
  "tha-ap485:18.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap485:19.1_0": "Paṭisambhidā catasso,",
  "tha-ap485:19.2_0": "…pe…",
  "tha-ap485:19.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap485:20.1_0": "Itthaṁ sudaṁ āyasmā bhisadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap485:21.1_0": "Bhisadāyakattherassāpadānaṁ tatiyaṁ."
}