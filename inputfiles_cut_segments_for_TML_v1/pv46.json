{
  "pv46:0.1_0": "Petavatthu",
  "pv46:0.2_0": "Mahāvagga",
  "pv46:0.3_0": "11. Pāṭaliputtapetavatthu",
  "pv46:1.1_0": "“Diṭṭhā tayā nirayā tiracchānayoni,",
  "pv46:1.2_0": "Petā asurā athavāpi mānusā devā;",
  "pv46:1.3_0": "Sayamaddasa kammavipākamattano,",
  "pv46:1.4_0": "Nessāmi taṁ pāṭaliputtamakkhataṁ;",
  "pv46:1.5_0": "Tattha gantvā kusalaṁ karohi kammaṁ”.",
  "pv46:2.1_0": "“Atthakāmosi me yakkha,",
  "pv46:2.2_0": "hitakāmosi devate;",
  "pv46:2.3_0": "Karomi tuyhaṁ vacanaṁ,",
  "pv46:2.4_0": "tvaṁsi ācariyo mama.",
  "pv46:3.1_0": "Diṭṭhā mayā nirayā tiracchānayoni,",
  "pv46:3.2_0": "Petā asurā athavāpi mānusā devā;",
  "pv46:3.3_0": "Sayamaddasaṁ kammavipākamattano,",
  "pv46:3.4_0": "Kāhāmi puññāni anappakānī”ti.",
  "pv46:4.1_0": "Pāṭaliputtapetavatthu ekādasamaṁ."
}