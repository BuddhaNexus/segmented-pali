{
  "tha-ap35:0.1_0": "Therāpadāna",
  "tha-ap35:0.2_0": "Kuṇḍadhānavagga",
  "tha-ap35:0.3_0": "3 Mahākaccānattheraapadāna",
  "tha-ap35:1.1_0": "“Padumuttaranāthassa,",
  "tha-ap35:1.2_0": "padumaṁ nāma cetiyaṁ;",
  "tha-ap35:1.3_0": "Silāsanaṁ kārayitvā,",
  "tha-ap35:1.4_0": "suvaṇṇenābhilepayiṁ.",
  "tha-ap35:2.1_0": "Ratanāmayachattañca,",
  "tha-ap35:2.2_0": "paggayha vāḷabījaniṁ;",
  "tha-ap35:2.3_0": "Buddhassa abhiropesiṁ,",
  "tha-ap35:2.4_0": "lokabandhussa tādino.",
  "tha-ap35:3.1_0": "Yāvatā devatā bhummā,",
  "tha-ap35:3.2_0": "sabbe sannipatuṁ tadā;",
  "tha-ap35:3.3_0": "Ratanāmayachattānaṁ,",
  "tha-ap35:3.4_0": "vipākaṁ kathayissati.",
  "tha-ap35:4.1_0": "Tañca sabbaṁ suṇissāma,",
  "tha-ap35:4.2_0": "kathayantassa satthuno;",
  "tha-ap35:4.3_0": "Bhiyyo hāsaṁ janeyyāma,",
  "tha-ap35:4.4_0": "sammāsambuddhasāsane.",
  "tha-ap35:5.1_0": "Hemāsane nisīditvā,",
  "tha-ap35:5.2_0": "sayambhū aggapuggalo;",
  "tha-ap35:5.3_0": "Bhikkhusaṅghaparibyūḷho,",
  "tha-ap35:5.4_0": "imā gāthā abhāsatha.",
  "tha-ap35:6.1_0": "‘Yenidaṁ āsanaṁ dinnaṁ,",
  "tha-ap35:6.2_0": "sovaṇṇaṁ ratanāmayaṁ;",
  "tha-ap35:6.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap35:6.4_0": "suṇātha mama bhāsato.",
  "tha-ap35:7.1_0": "Tiṁsa kappāni devindo,",
  "tha-ap35:7.2_0": "devarajjaṁ karissati;",
  "tha-ap35:7.3_0": "Samantā yojanasataṁ,",
  "tha-ap35:7.4_0": "ābhāyābhibhavissati.",
  "tha-ap35:8.1_0": "Manussalokamāgantvā,",
  "tha-ap35:8.2_0": "cakkavattī bhavissati;",
  "tha-ap35:8.3_0": "Pabhassaroti nāmena,",
  "tha-ap35:8.4_0": "uggatejo bhavissati.",
  "tha-ap35:9.1_0": "Divā vā yadi vā rattiṁ,",
  "tha-ap35:9.2_0": "sataraṁsīva uggato;",
  "tha-ap35:9.3_0": "Samantā aṭṭharatanaṁ,",
  "tha-ap35:9.4_0": "ujjotissati khattiyo.",
  "tha-ap35:10.1_0": "Kappasatasahassamhi,",
  "tha-ap35:10.2_0": "okkākakulasambhavo;",
  "tha-ap35:10.3_0": "Gotamo nāma gottena,",
  "tha-ap35:10.4_0": "satthā loke bhavissati.",
  "tha-ap35:11.1_0": "Tusitā hi cavitvāna,",
  "tha-ap35:11.2_0": "sukkamūlena codito;",
  "tha-ap35:11.3_0": "Kaccāno nāma nāmena,",
  "tha-ap35:11.4_0": "brahmabandhu bhavissati.",
  "tha-ap35:12.1_0": "So pacchā pabbajitvāna,",
  "tha-ap35:12.2_0": "arahā hessatināsavo;",
  "tha-ap35:12.3_0": "Gotamo lokapajjoto,",
  "tha-ap35:12.4_0": "aggaṭṭhāne ṭhapessati.",
  "tha-ap35:13.1_0": "Saṅkhittapucchitaṁ pañhaṁ,",
  "tha-ap35:13.2_0": "Vitthārena kathessati;",
  "tha-ap35:13.3_0": "Kathayanto ca taṁ pañhaṁ,",
  "tha-ap35:13.4_0": "Ajjhāsayaṁ pūrayissati’.",
  "tha-ap35:14.1_0": "Aḍḍhe kule abhijāto,",
  "tha-ap35:14.2_0": "brāhmaṇo mantapāragū;",
  "tha-ap35:14.3_0": "Ohāya dhanadhaññāni,",
  "tha-ap35:14.4_0": "pabbajiṁ anagāriyaṁ.",
  "tha-ap35:15.1_0": "Saṅkhittenapi pucchante,",
  "tha-ap35:15.2_0": "vitthārena kathemahaṁ;",
  "tha-ap35:15.3_0": "Ajjhāsayaṁ tesaṁ pūremi,",
  "tha-ap35:15.4_0": "tosemi dvipaduttamaṁ.",
  "tha-ap35:16.1_0": "Tosito me mahāvīro,",
  "tha-ap35:16.2_0": "sayambhū aggapuggalo;",
  "tha-ap35:16.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap35:16.4_0": "etadagge ṭhapesi maṁ.",
  "tha-ap35:17.1_0": "Paṭisambhidā catasso,",
  "tha-ap35:17.2_0": "…pe…",
  "tha-ap35:17.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap35:18.1_0": "Itthaṁ sudaṁ āyasmā mahākaccāno thero imā gāthāyo abhāsitthāti.",
  "tha-ap35:19.1_0": "Mahākaccānattherassāpadānaṁ tatiyaṁ."
}