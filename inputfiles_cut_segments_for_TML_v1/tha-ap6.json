{
  "tha-ap6:0.1_0": "Therāpadāna",
  "tha-ap6:0.2_0": "Buddhavagga",
  "tha-ap6:0.3_0": "6. Anuruddhattheraapadāna",
  "tha-ap6:1.1_0": "“Sumedhaṁ bhagavantāhaṁ,",
  "tha-ap6:1.2_0": "lokajeṭṭhaṁ narāsabhaṁ;",
  "tha-ap6:1.3_0": "Vūpakaṭṭhaṁ viharantaṁ,",
  "tha-ap6:1.4_0": "addasaṁ lokanāyakaṁ.",
  "tha-ap6:2.1_0": "Upagantvāna sambuddhaṁ,",
  "tha-ap6:2.2_0": "sumedhaṁ lokanāyakaṁ;",
  "tha-ap6:2.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap6:2.4_0": "buddhaseṭṭhamayācahaṁ.",
  "tha-ap6:3.1_0": "Anukampa mahāvīra,",
  "tha-ap6:3.2_0": "lokajeṭṭha narāsabha;",
  "tha-ap6:3.3_0": "Padīpaṁ te padassāmi,",
  "tha-ap6:3.4_0": "rukkhamūlamhi jhāyato.",
  "tha-ap6:4.1_0": "Adhivāsesi so dhīro,",
  "tha-ap6:4.2_0": "sayambhū vadataṁ varo;",
  "tha-ap6:4.3_0": "Dumesu vinivijjhitvā,",
  "tha-ap6:4.4_0": "yantaṁ yojiyahaṁ tadā.",
  "tha-ap6:5.1_0": "Sahassavaṭṭiṁ pādāsiṁ,",
  "tha-ap6:5.2_0": "buddhassa lokabandhuno;",
  "tha-ap6:5.3_0": "Sattāhaṁ pajjalitvāna,",
  "tha-ap6:5.4_0": "dīpā vūpasamiṁsu me.",
  "tha-ap6:6.1_0": "Tena cittappasādena,",
  "tha-ap6:6.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap6:6.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap6:6.4_0": "vimānamupapajjahaṁ.",
  "tha-ap6:7.1_0": "Upapannassa devattaṁ,",
  "tha-ap6:7.2_0": "byamhaṁ āsi sunimmitaṁ;",
  "tha-ap6:7.3_0": "Samantato pajjalati,",
  "tha-ap6:7.4_0": "dīpadānassidaṁ phalaṁ.",
  "tha-ap6:8.1_0": "Samantā yojanasataṁ,",
  "tha-ap6:8.2_0": "virocesimahaṁ tadā;",
  "tha-ap6:8.3_0": "Sabbe deve abhibhomi,",
  "tha-ap6:8.4_0": "dīpadānassidaṁ phalaṁ.",
  "tha-ap6:9.1_0": "Tiṁsakappāni devindo,",
  "tha-ap6:9.2_0": "devarajjamakārayiṁ;",
  "tha-ap6:9.3_0": "Na maṁ kecītimaññanti,",
  "tha-ap6:9.4_0": "dīpadānassidaṁ phalaṁ.",
  "tha-ap6:10.1_0": "Aṭṭhavīsatikkhattuñca,",
  "tha-ap6:10.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap6:10.3_0": "Divā rattiñca passāmi,",
  "tha-ap6:10.4_0": "samantā yojanaṁ tadā.",
  "tha-ap6:11.1_0": "Sahassalokaṁ ñāṇena,",
  "tha-ap6:11.2_0": "passāmi satthu sāsane;",
  "tha-ap6:11.3_0": "Dibbacakkhumanuppatto,",
  "tha-ap6:11.4_0": "dīpadānassidaṁ phalaṁ.",
  "tha-ap6:12.1_0": "Sumedho nāma sambuddho,",
  "tha-ap6:12.2_0": "tiṁsakappasahassito;",
  "tha-ap6:12.3_0": "Tassa dīpo mayā dinno,",
  "tha-ap6:12.4_0": "vippasannena cetasā.",
  "tha-ap6:13.1_0": "Paṭisambhidā catasso,",
  "tha-ap6:13.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap6:13.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap6:13.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap6:14.1_0": "Itthaṁ sudaṁ āyasmā anuruddho thero imā gāthāyo abhāsitthāti.",
  "tha-ap6:15.1_0": "Anuruddhattherassāpadānaṁ catutthaṁ."
}