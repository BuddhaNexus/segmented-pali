{
  "cp1:0.1_0": "Cariyāpiṭaka",
  "cp1:0.2_0": "Akittivagga",
  "cp1:0.3_0": "Dānapāramī 1",
  "cp1:0.4_0": "Akitticariya",
  "cp1:1.1_0": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
  "cp1:2.1_0": "“Kappe ca satasahasse,",
  "cp1:2.2_0": "caturo ca asaṅkhiye;",
  "cp1:2.3_0": "Etthantare yaṁ caritaṁ,",
  "cp1:2.4_0": "sabbaṁ taṁ bodhipācanaṁ.",
  "cp1:3.1_0": "Atītakappe caritaṁ,",
  "cp1:3.2_0": "ṭhapayitvā bhavābhave;",
  "cp1:3.3_0": "Imamhi kappe caritaṁ,",
  "cp1:3.4_0": "pavakkhissaṁ suṇohi me.",
  "cp1:4.1_0": "Yadā ahaṁ brahāraññe,",
  "cp1:4.2_0": "suññe vipinakānane;",
  "cp1:4.3_0": "Ajjhogāhetvā viharāmi,",
  "cp1:4.4_0": "akitti nāma tāpaso.",
  "cp1:5.1_0": "Tadā maṁ tapatejena,",
  "cp1:5.2_0": "santatto tidivābhibhū;",
  "cp1:5.3_0": "Dhārento brāhmaṇavaṇṇaṁ,",
  "cp1:5.4_0": "bhikkhāya maṁ upāgami.",
  "cp1:6.1_0": "Pavanā ābhataṁ paṇṇaṁ,",
  "cp1:6.2_0": "atelañca aloṇikaṁ;",
  "cp1:6.3_0": "Mama dvāre ṭhitaṁ disvā,",
  "cp1:6.4_0": "sakaṭāhena ākiriṁ.",
  "cp1:7.1_0": "Tassa datvānahaṁ paṇṇaṁ,",
  "cp1:7.2_0": "nikkujjitvāna bhājanaṁ;",
  "cp1:7.3_0": "Punesanaṁ jahitvāna,",
  "cp1:7.4_0": "pāvisiṁ paṇṇasālakaṁ.",
  "cp1:8.1_0": "Dutiyampi tatiyampi,",
  "cp1:8.2_0": "upagañchi mamantikaṁ;",
  "cp1:8.3_0": "Akampito anolaggo,",
  "cp1:8.4_0": "evamevamadāsahaṁ.",
  "cp1:9.1_0": "Na me tappaccayā atthi,",
  "cp1:9.2_0": "sarīrasmiṁ vivaṇṇiyaṁ;",
  "cp1:9.3_0": "Pītisukhena ratiyā,",
  "cp1:9.4_0": "vītināmemi taṁ divaṁ.",
  "cp1:10.1_0": "Yadi māsampi dvemāsaṁ,",
  "cp1:10.2_0": "dakkhiṇeyyaṁ varaṁ labhe;",
  "cp1:10.3_0": "Akampito anolīno,",
  "cp1:10.4_0": "dadeyyaṁ dānamuttamaṁ.",
  "cp1:11.1_0": "Na tassa dānaṁ dadamāno,",
  "cp1:11.2_0": "yasaṁ lābhañca patthayiṁ;",
  "cp1:11.3_0": "Sabbaññutaṁ patthayāno,",
  "cp1:11.4_0": "tāni kammāni ācarin”ti.",
  "cp1:12.1_0": "Akitticariyaṁ paṭhamaṁ."
}