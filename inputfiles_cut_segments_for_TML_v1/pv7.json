{
  "pv7:0.1_0": "Petavatthu",
  "pv7:0.2_0": "Uragavagga",
  "pv7:0.3_0": "7. Sattaputtakhādapetivatthu",
  "pv7:1.1_0": "“Naggā dubbaṇṇarūpāsi,",
  "pv7:1.2_0": "duggandhā pūti vāyasi;",
  "pv7:1.3_0": "Makkhikāhi parikiṇṇā,",
  "pv7:1.4_0": "kā nu tvaṁ idha tiṭṭhasī”ti.",
  "pv7:2.1_0": "“Ahaṁ bhadante petīmhi,",
  "pv7:2.2_0": "duggatā yamalokikā;",
  "pv7:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv7:2.4_0": "petalokaṁ ito gatā.",
  "pv7:3.1_0": "Kālena satta puttāni,",
  "pv7:3.2_0": "sāyaṁ satta punāpare;",
  "pv7:3.3_0": "Vijāyitvāna khādāmi,",
  "pv7:3.4_0": "tepi nā honti me alaṁ.",
  "pv7:4.1_0": "Pariḍayhati dhūmāyati,",
  "pv7:4.2_0": "khudāya hadayaṁ mama;",
  "pv7:4.3_0": "Nibbutiṁ nādhigacchāmi,",
  "pv7:4.4_0": "aggidaḍḍhāva ātape”ti.",
  "pv7:5.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv7:5.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv7:5.3_0": "Kissa kammavipākena,",
  "pv7:5.4_0": "puttamaṁsāni khādasī”ti.",
  "pv7:6.1_0": "“Ahū mayhaṁ duve puttā,",
  "pv7:6.2_0": "ubho sampattayobbanā;",
  "pv7:6.3_0": "Sāhaṁ puttabalūpetā,",
  "pv7:6.4_0": "sāmikaṁ atimaññisaṁ.",
  "pv7:7.1_0": "Tato me sāmiko kuddho,",
  "pv7:7.2_0": "sapatiṁ mayhamānayi;",
  "pv7:7.3_0": "Sā ca gabbhaṁ alabhittha,",
  "pv7:7.4_0": "tassā pāpaṁ acetayiṁ.",
  "pv7:8.1_0": "Sāhaṁ paduṭṭhamanasā,",
  "pv7:8.2_0": "akariṁ gabbhapātanaṁ;",
  "pv7:8.3_0": "Tassā temāsiko gabbho,",
  "pv7:8.4_0": "pūtilohitako pati.",
  "pv7:9.1_0": "Tadassā mātā kupitā,",
  "pv7:9.2_0": "mayhaṁ ñātī samānayi;",
  "pv7:9.3_0": "Sapathañca maṁ kāresi,",
  "pv7:9.4_0": "paribhāsāpayī ca maṁ.",
  "pv7:10.1_0": "Sāhaṁ ghorañca sapathaṁ,",
  "pv7:10.2_0": "musāvādaṁ abhāsisaṁ;",
  "pv7:10.3_0": "‘Puttamaṁsāni khādāmi,",
  "pv7:10.4_0": "sace taṁ pakataṁ mayā’.",
  "pv7:11.1_0": "Tassa kammassa vipākena,",
  "pv7:11.2_0": "musāvādassa cūbhayaṁ;",
  "pv7:11.3_0": "Puttamaṁsāni khādāmi,",
  "pv7:11.4_0": "pubbalohitamakkhitā”ti.",
  "pv7:12.1_0": "Sattaputtakhādapetivatthu sattamaṁ."
}