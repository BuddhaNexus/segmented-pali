{
  "anya-e1010n4:0_0": "Appamādāvaha pakiṇṇakaniddesa",
  "anya-e1010n4:1_0": "1.",
  "anya-e1010n4:2_0": "Saṁvijjanti dha lokasmiṁ,",
  "anya-e1010n4:3_0": "Bahū jīvitakappanā;",
  "anya-e1010n4:4_0": "Gahetvā patta muñcho yo,",
  "anya-e1010n4:5_0": "Jīvikānaṁ sa lāmako.",
  "anya-e1010n4:6_0": "2.",
  "anya-e1010n4:7_0": "Sukulāca tadupagā, kāmabhogā napekkhino;",
  "anya-e1010n4:8_0": "Na bhayaṭṭā na iṇaṭṭā, neva ājīva kāraṇā.",
  "anya-e1010n4:9_0": "3.",
  "anya-e1010n4:10_0": "Nālaṁva gihinā brahma, cariyāya akhaṇḍitaṁ;",
  "anya-e1010n4:11_0": "Gharāvāso tisambādho, pabbajjāva nirālayā.",
  "anya-e1010n4:12_0": "4.",
  "anya-e1010n4:13_0": "Bhavapaṅkā pamuccāma, tivittiṇṇā bhayānakā;",
  "anya-e1010n4:14_0": "Paṭipatti yimāyāti, katvā tadupagā ime.",
  "anya-e1010n4:15_0": "5.",
  "anya-e1010n4:16_0": "Uttiṭṭhe nappamajjeyya, dhammaṁ caritaṁ sucare;",
  "anya-e1010n4:17_0": "Dhammacārī sukhaṁseti, asmiṁloke paramhica.",
  "anya-e1010n4:18_0": "6.",
  "anya-e1010n4:19_0": "Svāgatā vata tebhikkhū, pattā sambuddhaputta taṁ;",
  "anya-e1010n4:20_0": "Gihi bandhana pucchijja, sukhitā sāsane ratā.",
  "anya-e1010n4:21_0": "7.",
  "anya-e1010n4:22_0": "Katapuñña visesāva, ete suladdha dullabhā;",
  "anya-e1010n4:23_0": "Chaṭṭetvāpi mahārajjaṁ, nedisaṁ laddha maññadā.",
  "anya-e1010n4:24_0": "8.",
  "anya-e1010n4:25_0": "Svāgatā sugatī hontu, māduggatī pamādino;",
  "anya-e1010n4:26_0": "Dussīlā ce gamissanti, apāyaṁ tibhayānakaṁ.",
  "anya-e1010n4:27_0": "9.",
  "anya-e1010n4:28_0": "Gihibhogā parīhinno, sāmaññattañca dūbhato;",
  "anya-e1010n4:29_0": "Paridhaṁsamāno pakireti, chavālātaṁva nassati.",
  "anya-e1010n4:30_0": "10.",
  "anya-e1010n4:31_0": "Kuso yathā duggahito, hatthamevā nukantati;",
  "anya-e1010n4:32_0": "Sāmaññaṁ dupparāmaṭṭhaṁ, nirayā yupa kaḍḍhati.",
  "anya-e1010n4:33_0": "11.",
  "anya-e1010n4:34_0": "Yaṁkiñci sithilaṁ kammaṁ, saṁkiliṭṭhañca yaṁkataṁ;",
  "anya-e1010n4:35_0": "Saṅkassaraṁ brahmacariyaṁ, nataṁhoti mahapphalaṁ.",
  "anya-e1010n4:36_0": "12.",
  "anya-e1010n4:37_0": "Kariyāce kariyā venaṁ, daḷhamenaṁ parakkame;",
  "anya-e1010n4:38_0": "Sithilohi paribbajo, bhiyyo ākirate rajaṁ.",
  "anya-e1010n4:39_0": "13.",
  "anya-e1010n4:40_0": "Iti vuttaṁ munindena, nussaraṁ ani vattito;",
  "anya-e1010n4:41_0": "Sadā alina cittena, careyya buddhasāvako.",
  "anya-e1010n4:42_0": "14.",
  "anya-e1010n4:43_0": "Rāgaṁ asubhacintāya, dosaṁ mettāya vāraye;",
  "anya-e1010n4:44_0": "Maraṇena dhajaṁmānaṁ, sambuddhe tikkha saddhiko.",
  "anya-e1010n4:45_0": "15.",
  "anya-e1010n4:46_0": "Asubhā kāmavitakkaṁ, mettā byāpāda takkitaṁ;",
  "anya-e1010n4:47_0": "Vihiṁsaṁ karuṇāyeva, nivāreyya sadāsato.",
  "anya-e1010n4:48_0": "16.",
  "anya-e1010n4:49_0": "Buddhāṇatti sadātīto, micchāvitakka pīḷito;",
  "anya-e1010n4:50_0": "Pāpadhammehi saṁkiṇṇo, soniccāpāya gāmiko.",
  "anya-e1010n4:51_0": "17.",
  "anya-e1010n4:52_0": "Dhovitvā pattimalāni, punātikkama saṁvuto;",
  "anya-e1010n4:53_0": "Micchāvitakka sañchedī, dūro apāya gāmito.",
  "anya-e1010n4:54_0": "18.",
  "anya-e1010n4:55_0": "Khīṇāsavatta buddhattaṁ, niyyānika ntarā yikaṁ;",
  "anya-e1010n4:56_0": "Sīhanādaṁ catuṭṭhāne, vesārajjo jino nadi.",
  "anya-e1010n4:57_0": "19.",
  "anya-e1010n4:58_0": "Sīlaṁ niyyānikaṁ nāma, āpatti antarāyikaṁ;",
  "anya-e1010n4:59_0": "Antarāya manāpajja, niyyāneva patiṭṭhatu.",
  "anya-e1010n4:60_0": "20.",
  "anya-e1010n4:61_0": "Niyyānikāca asubhā, subhasaññā ntarāyikā;",
  "anya-e1010n4:62_0": "Antarāya manāpajja, niyyāneva patiṭṭhatu.",
  "anya-e1010n4:63_0": "21.",
  "anya-e1010n4:64_0": "Nānāpatti pakiṇṇopi, pārājikā vasesako;",
  "anya-e1010n4:65_0": "So mityatta paṇīdhīhi, lajjīyeva visodhako.",
  "anya-e1010n4:66_0": "22.",
  "anya-e1010n4:67_0": "Alajjīkamma kiṇṇopi,",
  "anya-e1010n4:68_0": "Saṁvejetvā sumittiko;",
  "anya-e1010n4:69_0": "Lajjīyeva visodhento,",
  "anya-e1010n4:70_0": "Matakova asodhako.",
  "anya-e1010n4:71_0": "23.",
  "anya-e1010n4:72_0": "Yo pubbeva pamajjitvā, pacchāso nappamajjati;",
  "anya-e1010n4:73_0": "Somaṁ lokaṁ pabhāseti, abbhāmuttovacandimā.",
  "anya-e1010n4:74_0": "24.",
  "anya-e1010n4:75_0": "Dhuraṁkatvā dhipatayo, yo puññesu parakkame;",
  "anya-e1010n4:76_0": "Tassa niyyānikaṁ kammaṁ, kiṁnāmakaṁ nasijjhate.",
  "anya-e1010n4:77_0": "25.",
  "anya-e1010n4:78_0": "Paccate munino bhattaṁ, thokaṁthokaṁ ghareghare;",
  "anya-e1010n4:79_0": "Piṇḍikāyeva jīvantu, māpajjantu anesanaṁ.",
  "anya-e1010n4:80_0": "26.",
  "anya-e1010n4:81_0": "Dhoveyyā pattimagāni, vuṭṭhāna desanambuhi;",
  "anya-e1010n4:82_0": "Saṁvarissanti cittena, sīlaṁ dhotassa nimmalaṁ.",
  "anya-e1010n4:83_0": "27.",
  "anya-e1010n4:84_0": "Buddhāṇātikkamāpatti , niggahe rāgadosake;",
  "anya-e1010n4:85_0": "Natthi sañcicca āpatti, lajīva so pavuccati.",
  "anya-e1010n4:86_0": "28.",
  "anya-e1010n4:87_0": "Vāṇijja kasikādīhi, nāhāreṭṭhi dhasāsane;",
  "anya-e1010n4:88_0": "Dhura dvayaṁva kiccaṁ taṁ, nāññakiccehi hāpaye.",
  "anya-e1010n4:89_0": "29.",
  "anya-e1010n4:90_0": "Niggaṇheyya sakaṁcittaṁ, kiṭṭhādiṁ viya duppasuṁ;",
  "anya-e1010n4:91_0": "Satimā sampajānoca, care sabbiriyāpathe.",
  "anya-e1010n4:92_0": "30.",
  "anya-e1010n4:93_0": "Yathā thambhe nibandheyya, vacchaṁ damaṁ naro idha;",
  "anya-e1010n4:94_0": "Bandheyyevaṁ sakaṁcittaṁ, satiyā rammaṇe daḷhaṁ.",
  "anya-e1010n4:95_0": "31.",
  "anya-e1010n4:96_0": "Adhisīlādhicittānaṁ, adhipaññāya sikkhanaṁ;",
  "anya-e1010n4:97_0": "Bhikkhu kiccattayaṁ etaṁ, karontova subhikkhuko.",
  "anya-e1010n4:98_0": "32.",
  "anya-e1010n4:99_0": "Pañcāṭṭha dasa sīlāni, nādhisīlaṁ taduttari;",
  "anya-e1010n4:100_0": "Pātimokkhaṁ adhisīlaṁ, pabbatā dhika meruva.",
  "anya-e1010n4:101_0": "33.",
  "anya-e1010n4:102_0": "Pātimokkhaṁ visodhento, appeva jīvitaṁ jahe;",
  "anya-e1010n4:103_0": "Paññattaṁ lokanāthena, nabhinde sīlasaṁvaraṁ.",
  "anya-e1010n4:104_0": "34.",
  "anya-e1010n4:105_0": "Sīlenā tikkamaṁ thullaṁ, pariyuṭṭhaṁ samādhinā;",
  "anya-e1010n4:106_0": "Paññāyā nusayaṁ saṇhaṁ, kilesaṁ bhikkhu bhindati.",
  "anya-e1010n4:107_0": "35.",
  "anya-e1010n4:108_0": "Sāsanassādi sīlaṁva, majjhe tassa samādhiva;",
  "anya-e1010n4:109_0": "Paññāva pariyosānaṁ, kalyāṇāva imetayo.",
  "anya-e1010n4:110_0": "36.",
  "anya-e1010n4:111_0": "Mahāpuññe ṭhitaṁ sīlaṁ, samādhi appanā gataṁ;",
  "anya-e1010n4:112_0": "Catumagga yutā paññā, etaṁ sikkhattayaṁ mataṁ.",
  "anya-e1010n4:113_0": "37.",
  "anya-e1010n4:114_0": "Sīlanalakkhaṇaṁ sīlaṁ, dussīlya dhaṁsanaṁ rasaṁ;",
  "anya-e1010n4:115_0": "Hirottappa padaṭṭhānaṁ, suci paccupaṭṭhānakaṁ.",
  "anya-e1010n4:116_0": "38.",
  "anya-e1010n4:117_0": "Sasīlagutti nāthoca, dunnigaho visārado;",
  "anya-e1010n4:118_0": "Dhammaṭṭhītīti pañcete, guṇā venayike matā.",
  "anya-e1010n4:119_0": "39.",
  "anya-e1010n4:120_0": "Ādi kalrāṇa saṁvedī, sīlamattaṭṭha bhikkhavo;",
  "anya-e1010n4:121_0": "Uddhaṁ kalyāṇa lābhāya, alino anivattiko.",
  "anya-e1010n4:122_0": "40.",
  "anya-e1010n4:123_0": "Dhovitvā pattimalāni, vuṭṭhāna desana mbuhi;",
  "anya-e1010n4:124_0": "Suddhasīle ṭhitoyeva, evaṁ cinteyya paññavā.",
  "anya-e1010n4:125_0": "41.",
  "anya-e1010n4:126_0": "Sampuddhorasa puttāva, buddhurojā nussāvanā;",
  "anya-e1010n4:127_0": "Sambhūtā pitu dāyādā, puttānāma sabhāvato.",
  "anya-e1010n4:128_0": "42.",
  "anya-e1010n4:129_0": "Khīraṁ pitvāva jīvanti, jātāpi idha puttakā;",
  "anya-e1010n4:130_0": "Pariyatti jinakkhīraṁ, pitvāva jinaputtakā.",
  "anya-e1010n4:131_0": "43.",
  "anya-e1010n4:132_0": "Dāyoca nāma buddhassa, dhammāmisa vasādvidhā;",
  "anya-e1010n4:133_0": "Maggañāṇā dayo dhammo, cattāro paccayāmisā.",
  "anya-e1010n4:134_0": "44.",
  "anya-e1010n4:135_0": "Cira māmisa dāyādā, rājapūjādi gāhino;",
  "anya-e1010n4:136_0": "Dāyā missaggahaṁ nicchi, saddhamma garuko jino.",
  "anya-e1010n4:137_0": "45.",
  "anya-e1010n4:138_0": "Lakkha kappa catussaṅkhya, kālaṁ vicita niccitaṁ;",
  "anya-e1010n4:139_0": "Dhammadāyaṁ navindamhā, buddhaputtāpi yemayaṁ.",
  "anya-e1010n4:140_0": "46.",
  "anya-e1010n4:141_0": "Buddhavārita dāyādā, saddhammadāya bāhirā;",
  "anya-e1010n4:142_0": "Puttāpi satthudāsābhā, bhuttamattā hi dāsakā.",
  "anya-e1010n4:143_0": "47.",
  "anya-e1010n4:144_0": "Bhaddanta rāhulasseva, dāyaṁ nopi adā jino;",
  "anya-e1010n4:145_0": "Nādiyimhā pamādāya, taṁ dāyaṁ kusalantakaṁ.",
  "anya-e1010n4:146_0": "48.",
  "anya-e1010n4:147_0": "Dhammadāyādā mebhikkhave tumhebhavatha,",
  "anya-e1010n4:148_0": "Māāmisa dāyādā;",
  "anya-e1010n4:149_0": "Iti vuttaṁ munindena,",
  "anya-e1010n4:150_0": "Sāvakesu dayāvatā.",
  "anya-e1010n4:151_0": "49.",
  "anya-e1010n4:152_0": "Imāya buddhavācāya, buddhasantaka taṁ sare;",
  "anya-e1010n4:153_0": "Dvinnaṁ āmisaa dāyāda, bhāvassaca nivāraṇaṁ.",
  "anya-e1010n4:154_0": "50.",
  "anya-e1010n4:155_0": "Rajje caṇḍālaputtāva, saddhammacakka vattino;",
  "anya-e1010n4:156_0": "Puttā hontāpi dāyesmiṁ, nirāsā tiva ninditā.",
  "anya-e1010n4:157_0": "51.",
  "anya-e1010n4:158_0": "Micchājīva samāpannā, accāsā paccayāmise;",
  "anya-e1010n4:159_0": "Mahājānīya sampattā, moghakatvā tidullabhaṁ.",
  "anya-e1010n4:160_0": "52.",
  "anya-e1010n4:161_0": "Gihikāme pahāyāgo, paravantosu laggito;",
  "anya-e1010n4:162_0": "Gaṅgātiṇṇo taḷākamhi, nimuggovā tinindito.",
  "anya-e1010n4:163_0": "53.",
  "anya-e1010n4:164_0": "Cīvare piṇḍapāteca, paccaye sayanāsane;",
  "anya-e1010n4:165_0": "Etesu taṇha mākāsi, mālokaṁ punarāgami.",
  "anya-e1010n4:166_0": "54.",
  "anya-e1010n4:167_0": "Itivuttā nusārena, paccavekkhaṇa suddhiyā;",
  "anya-e1010n4:168_0": "Āmisesu hane āsaṁ, puttamaṁsu pamaṁ saraṁ.",
  "anya-e1010n4:169_0": "55.",
  "anya-e1010n4:170_0": "Seyyo ayoguḷo bhutto,",
  "anya-e1010n4:171_0": "Tatto aggisikhūpamo;",
  "anya-e1010n4:172_0": "Yañce bhuñjeyya dussīlo,",
  "anya-e1010n4:173_0": "Raṭṭhapiṇḍaṁ asaññato.",
  "anya-e1010n4:174_0": "56.",
  "anya-e1010n4:175_0": "Itivuttaṁ nucintento, vajje dussīla bhāvato;",
  "anya-e1010n4:176_0": "Sīle ṭhitova bhuñjeyya, māditta guḷakaṁ gili.",
  "anya-e1010n4:177_0": "57.",
  "anya-e1010n4:178_0": "Annāna matho pānānaṁ,",
  "anya-e1010n4:179_0": "Khādanīyāna mathopi vatthānaṁ;",
  "anya-e1010n4:180_0": "Laddhāna sannidhiṁ kariyā,",
  "anya-e1010n4:181_0": "Naca parittase tāni alabhamāno.",
  "anya-e1010n4:182_0": "58.",
  "anya-e1010n4:183_0": "Aññāhi lābhupanisā, aññā nibbāna gāminī;",
  "anya-e1010n4:184_0": "Sakkāraṁ nābhinandeyya, viveka manubrūhaye.",
  "anya-e1010n4:185_0": "59.",
  "anya-e1010n4:186_0": "Akatvā āmise āsaṁ,",
  "anya-e1010n4:187_0": "Saddhammeyeva āsiko;",
  "anya-e1010n4:188_0": "Appamatto samāraddho,",
  "anya-e1010n4:189_0": "Dhammadāyaṁ labhissati.",
  "anya-e1010n4:190_0": "60.",
  "anya-e1010n4:191_0": "Pariyattiṁ vinā seyyaṁ, nalabhanti budhāapi;",
  "anya-e1010n4:192_0": "Seyyatthikova sikkheyya, neva pūjādi kāraṇā.",
  "anya-e1010n4:193_0": "61.",
  "anya-e1010n4:194_0": "Bhavanissaraṇatthaṁva , sikkhe nā laggadūpamo;",
  "anya-e1010n4:195_0": "Tathūpamāya sikkhanto, apāyesu patissati.",
  "anya-e1010n4:196_0": "62.",
  "anya-e1010n4:197_0": "Sikkhitena amānatthaṁ, nasādhu mānathaddhiko;",
  "anya-e1010n4:198_0": "Mudubhāvāya sikkhitvā, damento muduko bhave.",
  "anya-e1010n4:199_0": "63.",
  "anya-e1010n4:200_0": "Rāgaṁ dosaṁ dhajaṁmānaṁ, sikkhantopi vivajjaye;",
  "anya-e1010n4:201_0": "Daharāpi hi miyyanti, natthi vassaggato mataṁ.",
  "anya-e1010n4:202_0": "64.",
  "anya-e1010n4:203_0": "Saddhaṁtikkheyya buddhena, rāgaṁ asubha cintayā;",
  "anya-e1010n4:204_0": "Maraṇena dhajaṁmānaṁ, dosaṁ mettāya vāraye.",
  "anya-e1010n4:205_0": "65.",
  "anya-e1010n4:206_0": "Etehi caturakkhehi, ganthaṁ sikkheyya saṁ vuto;",
  "anya-e1010n4:207_0": "Sikkhantassehi rakkhehi, nakoci saṁkilesiko.",
  "anya-e1010n4:208_0": "66.",
  "anya-e1010n4:209_0": "Buddhavācampi sajjhāya, etepi manasīkara;",
  "anya-e1010n4:210_0": "Vutto dhammavihārīti, ediso sāsane varo.",
  "anya-e1010n4:211_0": "67.",
  "anya-e1010n4:212_0": "Garūna mupadesena,",
  "anya-e1010n4:213_0": "Caturakkho susīlavā;",
  "anya-e1010n4:214_0": "Appassutopi pāsaṁso,",
  "anya-e1010n4:215_0": "Bhiyyoyeva bahussuto.",
  "anya-e1010n4:216_0": "68.",
  "anya-e1010n4:217_0": "Sātaṁ sevakkhaṇevappaṁ, taṁhetvā nantādukkhanti;",
  "anya-e1010n4:218_0": "Dhīro āsaṁ hane kāme, khuradhāramadhūpame.",
  "anya-e1010n4:219_0": "69.",
  "anya-e1010n4:220_0": "Yodha kāme sukhaṁmaññi,",
  "anya-e1010n4:221_0": "Na so dukkhā vimuccati;",
  "anya-e1010n4:222_0": "Mātāhi byaggha manvento,",
  "anya-e1010n4:223_0": "Vacho mutto kathaṁbhayā.",
  "anya-e1010n4:224_0": "70.",
  "anya-e1010n4:225_0": "Tiracchā peta laddhabbe, nāsaṁ kāmasukhe kare;",
  "anya-e1010n4:226_0": "Bhāyitabba sukhaṁ tañhi, tasmiṁ laggā mahātapā.",
  "anya-e1010n4:227_0": "71.",
  "anya-e1010n4:228_0": "Laddhā kāmasukhaṁ bālā, pamodanti napaṇḍitā;",
  "anya-e1010n4:229_0": "Pasupakkhībhi laddhabbaṁ, anantadukkha kāraṇaṁ.",
  "anya-e1010n4:230_0": "72.",
  "anya-e1010n4:231_0": "Laddhā dhammaratiṁviññū, modanti na apaṇḍitā;",
  "anya-e1010n4:232_0": "Anoma satta paribhogaṁ, bhaganissaraṇāvahaṁ.",
  "anya-e1010n4:233_0": "73.",
  "anya-e1010n4:234_0": "Hīnakammaṁ paṭicchannaṁ, kāmassādaṁ napatthaye;",
  "anya-e1010n4:235_0": "Dhamme pītiñca pāmojjaṁ, pattheyya sādhusampato.",
  "anya-e1010n4:236_0": "74.",
  "anya-e1010n4:237_0": "Pariggaṇhanti yekāme, hiṁ santite tadatthikā;",
  "anya-e1010n4:238_0": "Pariccattaṁ na hiṁ santi, muttaṁ vaṇṇenti sādhavo.",
  "anya-e1010n4:239_0": "75.",
  "anya-e1010n4:240_0": "Niccupakkamma puṭṭhopi, kāyo verīvasā nugo;",
  "anya-e1010n4:241_0": "Aciraṁyeva bhūsāyī, yuttova ta mupekkhituṁ.",
  "anya-e1010n4:242_0": "76.",
  "anya-e1010n4:243_0": "Rakkhitopi aguttova, kāyo bhayamukhe ṭhito;",
  "anya-e1010n4:244_0": "Tasmā kāya mupekkhitvā, caredhamma machambhito.",
  "anya-e1010n4:245_0": "77.",
  "anya-e1010n4:246_0": "Puṭṭho puṭṭhopi yaṁkāyo, bhuvi rogāsayīsayī;",
  "anya-e1010n4:247_0": "Kataṁkataṁ mudhāto na, tadatthaṁ duccare care.",
  "anya-e1010n4:248_0": "78.",
  "anya-e1010n4:249_0": "Pāpaṁ karoti yobālo,",
  "anya-e1010n4:250_0": "Puṭṭhuṁ kāyaṁ tidubbharaṁ;",
  "anya-e1010n4:251_0": "Bhūmyaṁ kāyaṁ ṭhapetvāna,",
  "anya-e1010n4:252_0": "Anātho so apāyiko.",
  "anya-e1010n4:253_0": "79.",
  "anya-e1010n4:254_0": "Verīvasā nugaṁ kāyaṁ,",
  "anya-e1010n4:255_0": "Bālo poseti duccaro;",
  "anya-e1010n4:256_0": "Posento niraye pakko,",
  "anya-e1010n4:257_0": "Kāyo bhūmyaṁ vikāragū.",
  "anya-e1010n4:258_0": "80.",
  "anya-e1010n4:259_0": "Pāpaṁ mākara kāyatthaṁ, kāyo verī vasānugo;",
  "anya-e1010n4:260_0": "Bhūmyaṁ sessati vekārī, pāpiko nirayaṁ gato.",
  "anya-e1010n4:261_0": "81.",
  "anya-e1010n4:262_0": "Amayhaṁ mayhasaññāya,",
  "anya-e1010n4:263_0": "Kāyaṁ rogavasānugaṁ;",
  "anya-e1010n4:264_0": "Posaṁ patto mahājāniṁ,",
  "anya-e1010n4:265_0": "Nokāso dhamma mikkhituṁ.",
  "anya-e1010n4:266_0": "82.",
  "anya-e1010n4:267_0": "Kāyāpekkhāya nokāso,",
  "anya-e1010n4:268_0": "Dhammaṁ daṭṭhuṁ rahogato;",
  "anya-e1010n4:269_0": "Upekkhāyeva okāso,",
  "anya-e1010n4:270_0": "Dukkhitā mha apekkhayā.",
  "anya-e1010n4:271_0": "83.",
  "anya-e1010n4:272_0": "Citta saṁsodhakā pakkā, kāyasaṁsodhakā navā;",
  "anya-e1010n4:273_0": "Sodhe cittaṁva pakkatthaṁ, nakāyaṁ bhavabhīruko.",
  "anya-e1010n4:274_0": "84.",
  "anya-e1010n4:275_0": "Cittasaṅkharaṇaṁ sādhu, taṁ saṅkhataṁ pabhassaraṁ;",
  "anya-e1010n4:276_0": "Nasādhu kāyasaṅkhāro, saṅkhatopyasubhova so.",
  "anya-e1010n4:277_0": "85.",
  "anya-e1010n4:278_0": "Sabhāva malinaṁ kāyaṁ, nimmalāya kathaṁ kare;",
  "anya-e1010n4:279_0": "Āgantumalinaṁ cittaṁ, sakkā kātuṁ sunimmalaṁ.",
  "anya-e1010n4:280_0": "86.",
  "anya-e1010n4:281_0": "Ādhibyādhi parotāya, ajjasvevā vināsinā;",
  "anya-e1010n4:282_0": "Kohināma sarīrāya, dhammāpetaṁ samācare.",
  "anya-e1010n4:283_0": "87.",
  "anya-e1010n4:284_0": "Sabhāvajegucchaṁ kāyaṁ, sobhetuṁnevasakkuṇe;",
  "anya-e1010n4:285_0": "Cittaṁ vā laṅkataṁ sobhaṁ, sīlādi gandhavāsitaṁ.",
  "anya-e1010n4:286_0": "88.",
  "anya-e1010n4:287_0": "Sace bhāyatha dukkhassa, sace vo dukkha mappiyaṁ;",
  "anya-e1010n4:288_0": "Mākattha pāpakaṁ kammaṁ, āvivā yadivā raho.",
  "anya-e1010n4:289_0": "89.",
  "anya-e1010n4:290_0": "Kilesā gantumalaṁcittaṁ, pabhassara sabhāvikaṁ;",
  "anya-e1010n4:291_0": "Tadāgantumalaṁ dhova, cittaṁ dhote pabhassaraṁ.",
  "anya-e1010n4:292_0": "90.",
  "anya-e1010n4:293_0": "Kilesā gantumalaṁcittaṁ, upakkamena sodhaye;",
  "anya-e1010n4:294_0": "Suvisuddha manāyeva, uttariṁsu bhavaṇṇavā.",
  "anya-e1010n4:295_0": "91.",
  "anya-e1010n4:296_0": "Kāye malamupekkhāya, citte malaṁva dhovatu;",
  "anya-e1010n4:297_0": "Citte hi nimmalesanto, pūtikāyopi pūjito.",
  "anya-e1010n4:298_0": "92.",
  "anya-e1010n4:299_0": "Kāyarogaṁ titikkhāya, cittarogaṁ cikicchatu;",
  "anya-e1010n4:300_0": "Sukhito kāyarogīpi, citte nirāmaye sati.",
  "anya-e1010n4:301_0": "93.",
  "anya-e1010n4:302_0": "Kāyaroge bahū vejjā, buddhuttiva manogade;",
  "anya-e1010n4:303_0": "Idhāpi kāyiko santo, anantāva manorujā.",
  "anya-e1010n4:304_0": "94.",
  "anya-e1010n4:305_0": "Sīsadaḍḍha mupekkhāya, nibbātu rāgapāvakaṁ;",
  "anya-e1010n4:306_0": "Khippaṁ asubha saññāya, niccadaḍḍhaṁ bhavebhave.",
  "anya-e1010n4:307_0": "95.",
  "anya-e1010n4:308_0": "Subhāya uṭṭhitaṁ rāgaṁ, asubhāya nivāraye;",
  "anya-e1010n4:309_0": "Sorāgo sāditaṁ jantuṁ, catvāpāyaṁ nayissati.",
  "anya-e1010n4:310_0": "96.",
  "anya-e1010n4:311_0": "Paṇḍitānaṁ malaṁ māno, sottukkaṁsena pākaṭo;",
  "anya-e1010n4:312_0": "Mākho attāna mukkaṁse, māvibhāve sakaṁmalaṁ.",
  "anya-e1010n4:313_0": "97.",
  "anya-e1010n4:314_0": "Guṇaṁ paṭicca guṇīnaṁ, ahaṁmāno samuṭṭhahe;",
  "anya-e1010n4:315_0": "Maraṇaṁ anucintāya, dhajaṁmānaṁ nipātaya.",
  "anya-e1010n4:316_0": "98.",
  "anya-e1010n4:317_0": "Eko kāyavivekesī, katvā kilesaniggahaṁ;",
  "anya-e1010n4:318_0": "Vase cittavivekesī, ubho padhi vivekādā.",
  "anya-e1010n4:319_0": "99.",
  "anya-e1010n4:320_0": "Adiṭṭhe asute ṭhāne, vaseyya mocanatthiko;",
  "anya-e1010n4:321_0": "Assādaṁhi nivāretuṁ, diṭṭhe sute tidukkaraṁ.",
  "anya-e1010n4:322_0": "100.",
  "anya-e1010n4:323_0": "Adiṭṭhe asute raññe, vaseyyi ndriyagopako;",
  "anya-e1010n4:324_0": "Vāretuṁ visayākiṇṇe, cakkhusotaṁ tidukkaraṁ.",
  "anya-e1010n4:325_0": "101.",
  "anya-e1010n4:326_0": "Rāgaṁ asati uppannaṁ, santābhujena vāraye;",
  "anya-e1010n4:327_0": "Bāhire rāga muppannaṁ, anto asubhacintayā.",
  "anya-e1010n4:328_0": "102.",
  "anya-e1010n4:329_0": "Rāgaṁ chindāti buddhāṇaṁ, saraṁ bhikkhu rahogato;",
  "anya-e1010n4:330_0": "Passaṁ kāyedha jegucchaṁ, labheyyā siṭṭhamocanaṁ.",
  "anya-e1010n4:331_0": "103.",
  "anya-e1010n4:332_0": "Kāyaṁ asubhatopassa, kallakāleva dassanaṁ;",
  "anya-e1010n4:333_0": "Moghaṁ kālaṁ nakhīyeyya, bhaveyyuṁsvepiāturā.",
  "anya-e1010n4:334_0": "104.",
  "anya-e1010n4:335_0": "Kāyaṁ jegucchatopassa, bālyanto paccavekkhiya;",
  "anya-e1010n4:336_0": "Ādo kiñci jigucchāya, jiguccheyyāyatiṁ bhusaṁ.",
  "anya-e1010n4:337_0": "105.",
  "anya-e1010n4:338_0": "Kāyādinava mikkheyya, dāni kiñcipi dassanaṁ;",
  "anya-e1010n4:339_0": "Āyatiṁ maggalābhāya, bhaveyya upanissa yo.",
  "anya-e1010n4:340_0": "106.",
  "anya-e1010n4:341_0": "Itthīna maṅgamaṅgāni, napasseyya nacintaye;",
  "anya-e1010n4:342_0": "Tadāsā ubhato bhaṭṭhā, sugatyā sāsanāpica.",
  "anya-e1010n4:343_0": "107.",
  "anya-e1010n4:344_0": "Itthirūpa sarākaḍḍhā, bhaṭṭhā bahūva sāsanā;",
  "anya-e1010n4:345_0": "Ihāpi dukkhitā hutvā, te pecca atidukkhino.",
  "anya-e1010n4:346_0": "108.",
  "anya-e1010n4:347_0": "Puṁmano pariyādāya, itthirūpasarā ṭhitā;",
  "anya-e1010n4:348_0": "Tassama mañña mekampi, navijjateva sabbadhi.",
  "anya-e1010n4:349_0": "109.",
  "anya-e1010n4:350_0": "Sallape asihatthena, pisācenāpi sallape;",
  "anya-e1010n4:351_0": "Āsade āsivisepi, aggikkhandhepi āsade;",
  "anya-e1010n4:352_0": "Natveva mātugāmena, ekekāya supesalo.",
  "anya-e1010n4:353_0": "110.",
  "anya-e1010n4:354_0": "Kāmaṁ asubhacintāya, byāpādaṁ snehacetasā;",
  "anya-e1010n4:355_0": "Vihiṁsaṁ karuṇāyehi, vitakkaggī tayosame.",
  "anya-e1010n4:356_0": "111.",
  "anya-e1010n4:357_0": "Asameta vitakkaggī, thusarāsimhi khāṇuva;",
  "anya-e1010n4:358_0": "Athirā sāsane tāpī, tepacchāatitāpino.",
  "anya-e1010n4:359_0": "112.",
  "anya-e1010n4:360_0": "Asubhā pagame lokā, taṁ mettāyupasaṅkame;",
  "anya-e1010n4:361_0": "Subhāvitāhi etāhi, jaheloke piyāpiyaṁ.",
  "anya-e1010n4:362_0": "113.",
  "anya-e1010n4:363_0": "Gataṭṭhitādo uppanne, vitakkaggī tayo same;",
  "anya-e1010n4:364_0": "Ātāpī pahitattoti, evaṁbhūto pavuccati.",
  "anya-e1010n4:365_0": "114.",
  "anya-e1010n4:366_0": "Vivādappatto dutīyo, keneko vivadissati;",
  "anya-e1010n4:367_0": "Tassate saggakāmassa, ekatta muparocitaṁ.",
  "anya-e1010n4:368_0": "115.",
  "anya-e1010n4:369_0": "Sinihappatto dutīyo, kamekā sinihissati;",
  "anya-e1010n4:370_0": "Tassate mokkhakāmassa, ekatta muparocitaṁ.",
  "anya-e1010n4:371_0": "116.",
  "anya-e1010n4:372_0": "Purato pacchatovāpi, aparo ce navijjati;",
  "anya-e1010n4:373_0": "Tasseva phāsu bhavati, ekassa vasato vane.",
  "anya-e1010n4:374_0": "117.",
  "anya-e1010n4:375_0": "Sukhañca kāma mayikaṁ, dukkhañca pavivekikaṁ;",
  "anya-e1010n4:376_0": "Pavivekaṁ dukkhaṁ seyyo, yañce kāmamayaṁ sukhaṁ.",
  "anya-e1010n4:377_0": "118.",
  "anya-e1010n4:378_0": "Yoca vassasataṁ jīve, apassaṁ udayabbayaṁ;",
  "anya-e1010n4:379_0": "Ekāhaṁ jīvitaṁ seyyo, passato udayabbayaṁ.",
  "anya-e1010n4:380_0": "119.",
  "anya-e1010n4:381_0": "Suññāgāraṁ paviṭṭhassa, santacittassa bhikkhuno;",
  "anya-e1010n4:382_0": "Amānussī rati hoti, sammādhammaṁ vipassato.",
  "anya-e1010n4:383_0": "120.",
  "anya-e1010n4:384_0": "Yatoyato sammasati, khandhānaṁ udayabbayaṁ;",
  "anya-e1010n4:385_0": "Labhati pītipāmojjaṁ, amataṁ taṁ vijānataṁ.",
  "anya-e1010n4:386_0": "121.",
  "anya-e1010n4:387_0": "Iccuttaṁ dhammapāmojjaṁ, vivekajaṁ rasādhikaṁ;",
  "anya-e1010n4:388_0": "Icchanto sīlavā bhikkhu, anivattita vīriyo.",
  "anya-e1010n4:389_0": "122.",
  "anya-e1010n4:390_0": "Vanā vāse vasitvāna, appicchādiguṇāvaho;",
  "anya-e1010n4:391_0": "Pali bodhe samucchijja, bhāveyyevaṁrahogato.",
  "anya-e1010n4:392_0": "123.",
  "anya-e1010n4:393_0": "Kāye jegucchapuñjāni, rūpaṁ ruppanabhāvato;",
  "anya-e1010n4:394_0": "Tassitā vedanā saññā, saṅkhārāca tatopare.",
  "anya-e1010n4:395_0": "124.",
  "anya-e1010n4:396_0": "Viññāṇañca imepañca, khandhā rāsatthato matā;",
  "anya-e1010n4:397_0": "Tecānicca dukkhā nattā, upādā vayadhammino.",
  "anya-e1010n4:398_0": "125.",
  "anya-e1010n4:399_0": "Pheṇapiṇḍū pamaṁ rūpaṁ, vedanā pupphuḷūpamā;",
  "anya-e1010n4:400_0": "Marīcikūpamā saññā, saṅkhārā kadalūpamā.",
  "anya-e1010n4:401_0": "126.",
  "anya-e1010n4:402_0": "Māyūpamanti viññāṇaṁ, dassite sabba dassinā;",
  "anya-e1010n4:403_0": "Upamāhi samasse yya, pañcakkhandhe asārake.",
  "anya-e1010n4:404_0": "127.",
  "anya-e1010n4:405_0": "Yāva byāti nimmissati,",
  "anya-e1010n4:406_0": "Koṭilakkhātahiṁkhaṇe;",
  "anya-e1010n4:407_0": "Khandhā bhijjanti hutvāna,",
  "anya-e1010n4:408_0": "Aniccānāma te tato.",
  "anya-e1010n4:409_0": "128.",
  "anya-e1010n4:410_0": "Bhaya pīḷitato dukkhā, anattā avidheyyato;",
  "anya-e1010n4:411_0": "Khandhāva honti bhijjanti, añño koci nalabbhati.",
  "anya-e1010n4:412_0": "129.",
  "anya-e1010n4:413_0": "Khandhā niccā khayaṭṭhena, bhayaṭṭhena dukhācate;",
  "anya-e1010n4:414_0": "Anattā sārakaṭṭhena, iti passe punappunaṁ.",
  "anya-e1010n4:415_0": "130.",
  "anya-e1010n4:416_0": "Bhāṇūdaye kayaṁ enti, hemante patitussavā;",
  "anya-e1010n4:417_0": "Rāgā mānāca sabbevaṁ, satyā niccānupassane.",
  "anya-e1010n4:418_0": "131.",
  "anya-e1010n4:419_0": "Sīhanādaṁ vanesutvā, saṁvejenti sasotakā;",
  "anya-e1010n4:420_0": "Vehapphalāpi lokevaṁ, jinerita tilakkhaṇaṁ.",
  "anya-e1010n4:421_0": "132.",
  "anya-e1010n4:422_0": "Vedanādīni nāmāni, nāmarūpadvayaṁva te;",
  "anya-e1010n4:423_0": "Taṇhāvijjāca kammādi, nāmarūpassa paccayā.",
  "anya-e1010n4:424_0": "133.",
  "anya-e1010n4:425_0": "Nāmarūpaṁ pariggayha, tato tassaca paccayaṁ;",
  "anya-e1010n4:426_0": "Hutvā abhāvato niccā, udayabbaya pīḷanā.",
  "anya-e1010n4:427_0": "134.",
  "anya-e1010n4:428_0": "Dukkhā avasavattittā, anattātitilakkhaṇaṁ;",
  "anya-e1010n4:429_0": "Āropetvāva saṅkhāre, sammasanto punappunaṁ.",
  "anya-e1010n4:430_0": "135.",
  "anya-e1010n4:431_0": "Pāpuṇeyyā nupubbena,",
  "anya-e1010n4:432_0": "Sabbasaṁyojana kkhayaṁ;",
  "anya-e1010n4:433_0": "Tampatto arahā bhikkhu,",
  "anya-e1010n4:434_0": "Bhavatiṇṇo sunibbuto.",
  "anya-e1010n4:435_0": "136.",
  "anya-e1010n4:436_0": "Natumhaṁ bhikkhave rūpaṁ, taṁ jahethāti vuttato;",
  "anya-e1010n4:437_0": "Memetanti upādānaṁ, pañcakkhandhe vināsaye.",
  "anya-e1010n4:438_0": "137.",
  "anya-e1010n4:439_0": "Puttā matthi dhanā matthi, iti bālo vihaññati;",
  "anya-e1010n4:440_0": "Attāpi attano natthi, kutoputtokutodhanaṁ.",
  "anya-e1010n4:441_0": "138.",
  "anya-e1010n4:442_0": "Iccutta manucintāya, attāti atthimetivā;",
  "anya-e1010n4:443_0": "Saññaṁ nāseyya khandhāva, atthīti ābhuje budho.",
  "anya-e1010n4:444_0": "139.",
  "anya-e1010n4:445_0": "Khandhanāsa manābhujja, mato me puttako iti;",
  "anya-e1010n4:446_0": "Socanti paridevanti puttonatthi nasomato.",
  "anya-e1010n4:447_0": "140.",
  "anya-e1010n4:448_0": "Bhijjamānesu khandhesu, attasaññī anattesu;",
  "anya-e1010n4:449_0": "Nādikāla viparitā, mahājānīyataṁ gatā.",
  "anya-e1010n4:450_0": "141.",
  "anya-e1010n4:451_0": "Bhijjamānesu khandhesu, laggā rattā mamāyitā;",
  "anya-e1010n4:452_0": "Nārīpumādi saññāya, viparetā anādike.",
  "anya-e1010n4:453_0": "142.",
  "anya-e1010n4:454_0": "Nādikāla viparito, attasaññī anattani;",
  "anya-e1010n4:455_0": "Bhijjamānesu khandhesu, jaha ttāti mamāyanaṁ.",
  "anya-e1010n4:456_0": "143.",
  "anya-e1010n4:457_0": "Abhiṇhuppattiyāyeva, bhijjamāno naññayati;",
  "anya-e1010n4:458_0": "Aniccalakkhaṇaṁ channaṁ, taṁ cinteyya supaññavā.",
  "anya-e1010n4:459_0": "144.",
  "anya-e1010n4:460_0": "Asanteyeva laggantā, namuccanti bhavattayā;",
  "anya-e1010n4:461_0": "Natthi santesu laggantā, rūpakkhandhā dike svidha.",
  "anya-e1010n4:462_0": "145.",
  "anya-e1010n4:463_0": "Taṇhā gijjhati metanti, māno ahanti maññati;",
  "anya-e1010n4:464_0": "Diṭṭhi gaṇhāti attāti, ete papañcakā tayo.",
  "anya-e1010n4:465_0": "146.",
  "anya-e1010n4:466_0": "Mame ta maha mattāti, papañcānaṁ vasānugo;",
  "anya-e1010n4:467_0": "Gaṇhanto bhava paṅkamhi, nimmuggova bhayānake.",
  "anya-e1010n4:468_0": "147.",
  "anya-e1010n4:469_0": "Name nāhaṁ naattāti, etehi vivadaṁ kare;",
  "anya-e1010n4:470_0": "Vivadantāva muccanti, bhavapaṅkā bhayānakā.",
  "anya-e1010n4:471_0": "148.",
  "anya-e1010n4:472_0": "Name nāhaṁ naattāti, daṭṭhabbanti jineritaṁ;",
  "anya-e1010n4:473_0": "Tatheva sabbadā maññe, mā papañca vasānugo.",
  "anya-e1010n4:474_0": "149.",
  "anya-e1010n4:475_0": "Loko vivadi buddhena, nalokena kadāciso;",
  "anya-e1010n4:476_0": "Anattāti jinuddiṭṭhaṁ, loko attāti maññati.",
  "anya-e1010n4:477_0": "150.",
  "anya-e1010n4:478_0": "Mo lokena samo hotu,",
  "anya-e1010n4:479_0": "Tassamo kiṁtaduttare;",
  "anya-e1010n4:480_0": "Andhibhūto ayaṁloko,",
  "anya-e1010n4:481_0": "Sambuddhassa virodhiko.",
  "anya-e1010n4:482_0": "151.",
  "anya-e1010n4:483_0": "Sambuddhassa vasaṁ nvetu, sanjhādi bhayatajjito;",
  "anya-e1010n4:484_0": "Tabbasaṁyeva anvento, bhavatiṇṇo bhavissati.",
  "anya-e1010n4:485_0": "152.",
  "anya-e1010n4:486_0": "Anattāti girā saccā, attāti vacanaṁ musā;",
  "anya-e1010n4:487_0": "Musāya vivade loko, buddhena sacca vādinā.",
  "anya-e1010n4:488_0": "153.",
  "anya-e1010n4:489_0": "Turaṅgavajagāmamhā, purime camakya kānane;",
  "anya-e1010n4:490_0": "Vasatā aggadhammena, therena racito ayaṁ.",
  "anya-e1010n4:491_0": "154.",
  "anya-e1010n4:492_0": "Arimatteyya buddhassa,",
  "anya-e1010n4:493_0": "Dhamma ssutakkhaṇe bhave;",
  "anya-e1010n4:494_0": "Khīṇāsavo mahāpañño,",
  "anya-e1010n4:495_0": "Puññena tena sāvakoti."
}