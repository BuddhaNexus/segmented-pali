{
  "tha-ap36:0.1_0": "Therāpadāna",
  "tha-ap36:0.2_0": "Kuṇḍadhānavagga",
  "tha-ap36:0.3_0": "4. Kāḷudāyittheraapadāna",
  "tha-ap36:1.1_0": "“Padumuttarabuddhassa,",
  "tha-ap36:1.2_0": "lokajeṭṭhassa tādino;",
  "tha-ap36:1.3_0": "Addhānaṁ paṭipannassa,",
  "tha-ap36:1.4_0": "carato cārikaṁ tadā.",
  "tha-ap36:2.1_0": "Suphullaṁ padumaṁ gayha,",
  "tha-ap36:2.2_0": "uppalaṁ mallikañcahaṁ;",
  "tha-ap36:2.3_0": "Paramannaṁ gahetvāna,",
  "tha-ap36:2.4_0": "adāsiṁ satthuno ahaṁ.",
  "tha-ap36:3.1_0": "Paribhuñji mahāvīro,",
  "tha-ap36:3.2_0": "paramannaṁ subhojanaṁ;",
  "tha-ap36:3.3_0": "Tañca pupphaṁ gahetvāna,",
  "tha-ap36:3.4_0": "janassa sampadassayi.",
  "tha-ap36:4.1_0": "Iṭṭhaṁ kantaṁ piyaṁ loke,",
  "tha-ap36:4.2_0": "jalajaṁ pupphamuttamaṁ;",
  "tha-ap36:4.3_0": "Sudukkaraṁ kataṁ tena,",
  "tha-ap36:4.4_0": "yo me pupphaṁ adāsidaṁ.",
  "tha-ap36:5.1_0": "Yo pupphamabhiropesi,",
  "tha-ap36:5.2_0": "paramannañcadāsi me;",
  "tha-ap36:5.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap36:5.4_0": "suṇātha mama bhāsato.",
  "tha-ap36:6.1_0": "‘Dasa aṭṭha cakkhattuṁ so,",
  "tha-ap36:6.2_0": "devarajjaṁ karissati;",
  "tha-ap36:6.3_0": "Uppalaṁ padumañcāpi,",
  "tha-ap36:6.4_0": "mallikañca taduttari.",
  "tha-ap36:7.1_0": "Assa puññavipākena,",
  "tha-ap36:7.2_0": "dibbagandhasamāyutaṁ;",
  "tha-ap36:7.3_0": "Ākāse chadanaṁ katvā,",
  "tha-ap36:7.4_0": "dhārayissati tāvade.",
  "tha-ap36:8.1_0": "Pañcavīsatikkhattuñca,",
  "tha-ap36:8.2_0": "cakkavattī bhavissati;",
  "tha-ap36:8.3_0": "Pathabyā rajjaṁ pañcasataṁ,",
  "tha-ap36:8.4_0": "vasudhaṁ āvasissati.",
  "tha-ap36:9.1_0": "Kappasatasahassamhi,",
  "tha-ap36:9.2_0": "okkākakulasambhavo;",
  "tha-ap36:9.3_0": "Gotamo nāma gottena,",
  "tha-ap36:9.4_0": "satthā loke bhavissati.",
  "tha-ap36:10.1_0": "Sakakammābhiraddho so,",
  "tha-ap36:10.2_0": "sukkamūlena codito;",
  "tha-ap36:10.3_0": "Sakyānaṁ nandijanano,",
  "tha-ap36:10.4_0": "ñātibandhu bhavissati.",
  "tha-ap36:11.1_0": "So pacchā pabbajitvāna,",
  "tha-ap36:11.2_0": "sukkamūlena codito;",
  "tha-ap36:11.3_0": "Sabbāsave pariññāya,",
  "tha-ap36:11.4_0": "nibbāyissatināsavo.",
  "tha-ap36:12.1_0": "Paṭisambhidamanuppattaṁ,",
  "tha-ap36:12.2_0": "katakiccamanāsavaṁ;",
  "tha-ap36:12.3_0": "Gotamo lokabandhu taṁ,",
  "tha-ap36:12.4_0": "etadagge ṭhapessati.",
  "tha-ap36:13.1_0": "Padhānapahitatto so,",
  "tha-ap36:13.2_0": "upasanto nirūpadhi;",
  "tha-ap36:13.3_0": "Udāyī nāma nāmena,",
  "tha-ap36:13.4_0": "hessati satthu sāvako’.",
  "tha-ap36:14.1_0": "Rāgo doso ca moho ca,",
  "tha-ap36:14.2_0": "māno makkho ca dhaṁsito;",
  "tha-ap36:14.3_0": "Sabbāsave pariññāya,",
  "tha-ap36:14.4_0": "viharāmi anāsavo.",
  "tha-ap36:15.1_0": "Tosayiñcāpi sambuddhaṁ,",
  "tha-ap36:15.2_0": "ātāpī nipako ahaṁ;",
  "tha-ap36:15.3_0": "Pasādito ca sambuddho,",
  "tha-ap36:15.4_0": "etadagge ṭhapesi maṁ.",
  "tha-ap36:16.1_0": "Paṭisambhidā catasso,",
  "tha-ap36:16.2_0": "…pe…",
  "tha-ap36:16.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap36:17.1_0": "Itthaṁ sudaṁ āyasmā kāḷudāyī thero imā gāthāyo abhāsitthāti.",
  "tha-ap36:18.1_0": "Kāḷudāyittherassāpadānaṁ catutthaṁ."
}