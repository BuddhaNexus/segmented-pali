{
  "thag2.8:0.1_0": "Theragāthā",
  "thag2.8:0.2_0": "Dukanipāta",
  "thag2.8:0.3_0": "Paṭhamavagga",
  "thag2.8:0.4_0": "2.8. Surādhattheragāthā",
  "thag2.8:1.1_0": "“Khīṇā hi mayhaṁ jāti,",
  "thag2.8:1.2_0": "vusitaṁ jinasāsanaṁ;",
  "thag2.8:1.3_0": "Pahīno jālasaṅkhāto,",
  "thag2.8:1.4_0": "bhavanetti samūhatā.",
  "thag2.8:2.1_0": "Yassatthāya pabbajito,",
  "thag2.8:2.2_0": "agārasmānagāriyaṁ;",
  "thag2.8:2.3_0": "So me attho anuppatto,",
  "thag2.8:2.4_0": "sabbasaṁyojanakkhayo”ti.",
  "thag2.8:2.5_0": "… Surādho thero …."
}