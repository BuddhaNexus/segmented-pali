{
  "anya-e0809n0:0_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0809n0:1_0": "Abhidhānappadīpikā",
  "anya-e0809n0:2_0": "Buddhappaṇāmo",
  "anya-e0809n0:3_0": "1.",
  "anya-e0809n0:4_0": "Tathāgato yo karuṇākaro karo,",
  "anya-e0809n0:5_0": "Payāta’mosajja sukhappadaṁ padaṁ;",
  "anya-e0809n0:6_0": "Akā paratthaṁ kalisambhave bhave,",
  "anya-e0809n0:7_0": "Namāmi taṁ kevaladukkaraṁ karaṁ.",
  "anya-e0809n0:8_0": "Dhammappaṇāmo",
  "anya-e0809n0:9_0": "2.",
  "anya-e0809n0:10_0": "Apūjayuṁ yaṁ munikuñjarā jarā,",
  "anya-e0809n0:11_0": "Rujādimuttā yahimuttare tare;",
  "anya-e0809n0:12_0": "Ṭhitā tivaṭṭambunidhiṁ narānarā,",
  "anya-e0809n0:13_0": "Tariṁsu taṁ dhammamaghappahaṁ pahaṁ.",
  "anya-e0809n0:14_0": "Saṅghappaṇāmo",
  "anya-e0809n0:15_0": "3.",
  "anya-e0809n0:16_0": "Gataṁ munindo’rasasūnutaṁ nutaṁ,",
  "anya-e0809n0:17_0": "Supuññakhettaṁ bhuvane sutaṁ sutaṁ;",
  "anya-e0809n0:18_0": "Gaṇampi pāṇīkatasaṁvaraṁ varaṁ,",
  "anya-e0809n0:19_0": "Sadā guṇoghena nirantara’ntaraṁ.",
  "anya-e0809n0:20_0": "Paṭiññā",
  "anya-e0809n0:21_0": "4.",
  "anya-e0809n0:22_0": "Nāmaliṅgesu kosalla, matthanicchayakāraṇaṁ;",
  "anya-e0809n0:23_0": "Yato mahabbalaṁ buddha, vacane pāṭavatthinaṁ.",
  "anya-e0809n0:24_0": "5.",
  "anya-e0809n0:25_0": "Nāmaliṅgānya’to buddha, bhāsitassā’rahānya’haṁ;",
  "anya-e0809n0:26_0": "Dassayanto pakāsessa, mabhidhānappadīpikaṁ.",
  "anya-e0809n0:27_0": "Paribhāsā",
  "anya-e0809n0:28_0": "6.",
  "anya-e0809n0:29_0": "Bhiyyo rūpantarā sāha, cariyena ca katthaci;",
  "anya-e0809n0:30_0": "Kvacā’ haccavidhānena ñeyyaṁ thīpunnapuṁsakaṁ.",
  "anya-e0809n0:31_0": "7.",
  "anya-e0809n0:32_0": "Abhinnaliṅgānaṁyeva, dvando ca, liṅgavācakā;",
  "anya-e0809n0:33_0": "Gāthāpādantamajjhaṭṭhā, pubbaṁ yantyapare paraṁ.",
  "anya-e0809n0:34_0": "8.",
  "anya-e0809n0:35_0": "Pumitthiyaṁ padaṁ dvīsu, sabbaliṅge ca tīsviti;",
  "anya-e0809n0:36_0": "Abhidhānantarārambhe, ñeyyaṁ tva’nta mathādi ca.",
  "anya-e0809n0:37_0": "9.",
  "anya-e0809n0:38_0": "Bhiyyo payoga māgamma, sogate āgame kvaci;",
  "anya-e0809n0:39_0": "Nighaṇḍu yutti ñcānīya, nāmaliṅgaṁ kathīyatīti."
}