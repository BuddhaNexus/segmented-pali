{
  "tha-ap253:0.1_0": "Therāpadāna",
  "tha-ap253:0.2_0": "Thomakavagga",
  "tha-ap253:0.3_0": "1. Thomakattheraapadāna",
  "tha-ap253:1.1_0": "“Devaloke ṭhito santo,",
  "tha-ap253:1.2_0": "vipassissa mahesino;",
  "tha-ap253:1.3_0": "Dhammaṁ suṇitvā mudito,",
  "tha-ap253:1.4_0": "imaṁ vācaṁ abhāsahaṁ.",
  "tha-ap253:2.1_0": "‘Namo te purisājañña,",
  "tha-ap253:2.2_0": "namo te purisuttama;",
  "tha-ap253:2.3_0": "Bahujjanaṁ tārayasi,",
  "tha-ap253:2.4_0": "desento amataṁ padaṁ’.",
  "tha-ap253:3.1_0": "Ekanavutito kappe,",
  "tha-ap253:3.2_0": "yaṁ vācamabhaṇiṁ tadā;",
  "tha-ap253:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap253:3.4_0": "thomanāya idaṁ phalaṁ.",
  "tha-ap253:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap253:4.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap253:4.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap253:4.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap253:5.1_0": "Itthaṁ sudaṁ āyasmā thomako thero imā gāthāyo abhāsitthāti.",
  "tha-ap253:6.1_0": "Thomakattherassāpadānaṁ paṭhamaṁ."
}