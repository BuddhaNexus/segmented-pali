{
  "tha-ap376:0.1_0": "Therāpadāna",
  "tha-ap376:0.2_0": "Bodhivandanavagga",
  "tha-ap376:0.3_0": "4 Paṭṭipupphiyattheraapadāna",
  "tha-ap376:1.1_0": "“Yadā nibbāyi sambuddho,",
  "tha-ap376:1.2_0": "mahesī padumuttaro;",
  "tha-ap376:1.3_0": "Samāgamma janā sabbe,",
  "tha-ap376:1.4_0": "sarīraṁ nīharanti te.",
  "tha-ap376:2.1_0": "Nīharante sarīramhi,",
  "tha-ap376:2.2_0": "vajjamānāsu bherisu;",
  "tha-ap376:2.3_0": "Pasannacitto sumano,",
  "tha-ap376:2.4_0": "paṭṭipupphaṁ apūjayiṁ.",
  "tha-ap376:3.1_0": "Satasahassito kappe,",
  "tha-ap376:3.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap376:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap376:3.4_0": "sarīrapūjite phalaṁ.",
  "tha-ap376:4.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap376:4.2_0": "bhavā sabbe samūhatā;",
  "tha-ap376:4.3_0": "Nāgova bandhanaṁ chetvā,",
  "tha-ap376:4.4_0": "viharāmi anāsavo.",
  "tha-ap376:5.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap376:5.2_0": "Mama buddhassa santike;",
  "tha-ap376:5.3_0": "Tisso vijjā anuppattā,",
  "tha-ap376:5.4_0": "Kataṁ buddhassa sāsanaṁ.",
  "tha-ap376:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap376:6.2_0": "…pe…",
  "tha-ap376:6.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap376:7.1_0": "Itthaṁ sudaṁ āyasmā paṭṭipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap376:8.1_0": "Paṭṭipupphiyattherassāpadānaṁ catutthaṁ."
}