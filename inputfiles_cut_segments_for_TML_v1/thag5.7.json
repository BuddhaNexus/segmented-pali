{
  "thag5.7:0.1_0": "Theragāthā",
  "thag5.7:0.2_0": "Pañcakanipāta",
  "thag5.7:0.3_0": "Paṭhamavagga",
  "thag5.7:0.4_0": "5.7. Gayākassapattheragāthā",
  "thag5.7:1.1_0": "“Pāto majjhanhikaṁ sāyaṁ,",
  "thag5.7:1.2_0": "tikkhattuṁ divasassahaṁ;",
  "thag5.7:1.3_0": "Otariṁ udakaṁ sohaṁ,",
  "thag5.7:1.4_0": "gayāya gayaphagguyā.",
  "thag5.7:2.1_0": "‘Yaṁ mayā pakataṁ pāpaṁ,",
  "thag5.7:2.2_0": "pubbe aññāsu jātisu;",
  "thag5.7:2.3_0": "Taṁ dānīdha pavāhemi’,",
  "thag5.7:2.4_0": "evaṁdiṭṭhi pure ahuṁ.",
  "thag5.7:3.1_0": "Sutvā subhāsitaṁ vācaṁ,",
  "thag5.7:3.2_0": "dhammatthasahitaṁ padaṁ;",
  "thag5.7:3.3_0": "Tathaṁ yāthāvakaṁ atthaṁ,",
  "thag5.7:3.4_0": "yoniso paccavekkhisaṁ.",
  "thag5.7:4.1_0": "Ninhātasabbapāpomhi,",
  "thag5.7:4.2_0": "nimmalo payato suci;",
  "thag5.7:4.3_0": "Suddho suddhassa dāyādo,",
  "thag5.7:4.4_0": "putto buddhassa oraso.",
  "thag5.7:5.1_0": "Ogayhaṭṭhaṅgikaṁ sotaṁ,",
  "thag5.7:5.2_0": "sabbapāpaṁ pavāhayiṁ;",
  "thag5.7:5.3_0": "Tisso vijjā ajjhagamiṁ,",
  "thag5.7:5.4_0": "kataṁ buddhassa sāsanan”ti.",
  "thag5.7:5.5_0": "… Gayākassapo thero …."
}