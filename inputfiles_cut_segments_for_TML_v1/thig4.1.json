{
  "thig4.1:0.1_0": "Therīgāthā",
  "thig4.1:0.2_0": "Catukkanipāta",
  "thig4.1:0.3_0": "1. Bhaddākāpilānītherīgāthā",
  "thig4.1:1.1_0": "“Putto buddhassa dāyādo,",
  "thig4.1:1.2_0": "kassapo susamāhito;",
  "thig4.1:1.3_0": "Pubbenivāsaṁ yovedi,",
  "thig4.1:1.4_0": "saggāpāyañca passati.",
  "thig4.1:2.1_0": "Atho jātikkhayaṁ patto,",
  "thig4.1:2.2_0": "abhiññāvosito muni;",
  "thig4.1:2.3_0": "Etāhi tīhi vijjāhi,",
  "thig4.1:2.4_0": "tevijjo hoti brāhmaṇo.",
  "thig4.1:3.1_0": "Tatheva bhaddā kāpilānī,",
  "thig4.1:3.2_0": "tevijjā maccuhāyinī;",
  "thig4.1:3.3_0": "Dhāreti antimaṁ dehaṁ,",
  "thig4.1:3.4_0": "jetvā māraṁ savāhiniṁ.",
  "thig4.1:4.1_0": "Disvā ādīnavaṁ loke,",
  "thig4.1:4.2_0": "ubho pabbajitā mayaṁ;",
  "thig4.1:4.3_0": "Tyamha khīṇāsavā dantā,",
  "thig4.1:4.4_0": "sītibhūtamha nibbutā”ti.",
  "thig4.1:5.1_0": "…",
  "thig4.1:5.2_0": "Bhaddā kāpilānī therī ….",
  "thig4.1:6.1_0": "Catukkanipāto niṭṭhito."
}