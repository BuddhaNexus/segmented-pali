{
  "tha-ap343:0.1_0": "Therāpadāna",
  "tha-ap343:0.2_0": "Ekapadumiyavagga",
  "tha-ap343:0.3_0": "1. Ekapadumiyattheraapadāna",
  "tha-ap343:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap343:1.2_0": "sabbadhammāna pāragū;",
  "tha-ap343:1.3_0": "Bhavābhave vibhāvento,",
  "tha-ap343:1.4_0": "tāresi janataṁ bahuṁ.",
  "tha-ap343:2.1_0": "Haṁsarājā tadā homi,",
  "tha-ap343:2.2_0": "dijānaṁ pavaro ahaṁ;",
  "tha-ap343:2.3_0": "Jātassaraṁ samogayha,",
  "tha-ap343:2.4_0": "kīḷāmi haṁsakīḷitaṁ.",
  "tha-ap343:3.1_0": "Padumuttaro lokavidū,",
  "tha-ap343:3.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap343:3.3_0": "Jātassarassa upari,",
  "tha-ap343:3.4_0": "āgacchi tāvade jino.",
  "tha-ap343:4.1_0": "Disvānahaṁ devadevaṁ,",
  "tha-ap343:4.2_0": "sayambhuṁ lokanāyakaṁ;",
  "tha-ap343:4.3_0": "Vaṇṭe chetvāna padumaṁ,",
  "tha-ap343:4.4_0": "satapattaṁ manoramaṁ.",
  "tha-ap343:5.1_0": "Mukhatuṇḍena paggayha,",
  "tha-ap343:5.2_0": "pasanno lokanāyake;",
  "tha-ap343:5.3_0": "Ukkhipitvāna gagane,",
  "tha-ap343:5.4_0": "buddhaseṭṭhaṁ apūjayiṁ.",
  "tha-ap343:6.1_0": "Padumuttaro lokavidū,",
  "tha-ap343:6.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap343:6.3_0": "Antalikkhe ṭhito satthā,",
  "tha-ap343:6.4_0": "akā me anumodanaṁ.",
  "tha-ap343:7.1_0": "‘Iminā ekapadumena,",
  "tha-ap343:7.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap343:7.3_0": "Kappānaṁ satasahassaṁ,",
  "tha-ap343:7.4_0": "vinipātaṁ na gacchasi’.",
  "tha-ap343:8.1_0": "Idaṁ vatvāna sambuddho,",
  "tha-ap343:8.2_0": "jalajuttamanāmako;",
  "tha-ap343:8.3_0": "Mama kammaṁ pakittetvā,",
  "tha-ap343:8.4_0": "agamā yena patthitaṁ.",
  "tha-ap343:9.1_0": "Satasahassito kappe,",
  "tha-ap343:9.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap343:9.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap343:9.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap343:10.1_0": "Paṭisambhidā catasso,",
  "tha-ap343:10.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap343:10.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap343:10.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap343:11.1_0": "Itthaṁ sudaṁ āyasmā ekapadumiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap343:12.1_0": "Ekapadumiyattherassāpadānaṁ paṭhamaṁ."
}