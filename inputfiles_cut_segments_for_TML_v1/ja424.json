{
  "ja424:0.1_0": "Jātaka",
  "ja424:0.2_0": "Aṭṭhakanipāta",
  "ja424:0.3_0": "Kaccānivagga",
  "ja424:0.4_0": "8. Ādittajātaka",
  "ja424:1.1_0": "“Ādittasmiṁ agārasmiṁ,",
  "ja424:1.2_0": "yaṁ nīharati bhājanaṁ;",
  "ja424:1.3_0": "Taṁ tassa hoti atthāya,",
  "ja424:1.4_0": "no ca yaṁ tattha ḍayhati.",
  "ja424:2.1_0": "Evamādīpito loko,",
  "ja424:2.2_0": "jarāya maraṇena ca;",
  "ja424:2.3_0": "Nīharetheva dānena,",
  "ja424:2.4_0": "dinnaṁ hoti sunīhataṁ”.",
  "ja424:3.1_0": "“Yo dhammaladdhassa dadāti dānaṁ,",
  "ja424:3.2_0": "Uṭṭhānaviriyādhigatassa jantu;",
  "ja424:3.3_0": "Atikkamma so vetaraṇiṁ yamassa,",
  "ja424:3.4_0": "Dibbāni ṭhānāni upeti macco.",
  "ja424:4.1_0": "Dānañca yuddhañca samānamāhu,",
  "ja424:4.2_0": "Appāpi santā bahuke jinanti;",
  "ja424:4.3_0": "Appampi ce saddahāno dadāti,",
  "ja424:4.4_0": "Teneva so hoti sukhī parattha.",
  "ja424:5.1_0": "Viceyya dānaṁ sugatappasatthaṁ,",
  "ja424:5.2_0": "Ye dakkhiṇeyyā idha jīvaloke;",
  "ja424:5.3_0": "Etesu dinnāni mahapphalāni,",
  "ja424:5.4_0": "Bījāni vuttāni yathā sukhette.",
  "ja424:6.1_0": "Yo pāṇabhūtāni aheṭhayaṁ caraṁ,",
  "ja424:6.2_0": "Parūpavādā na karoti pāpaṁ;",
  "ja424:6.3_0": "Bhīruṁ pasaṁsanti na tattha sūraṁ,",
  "ja424:6.4_0": "Bhayā hi santo na karonti pāpaṁ.",
  "ja424:7.1_0": "Hīnena brahmacariyena,",
  "ja424:7.2_0": "khattiye upapajjati;",
  "ja424:7.3_0": "Majjhimena ca devattaṁ,",
  "ja424:7.4_0": "uttamena visujjhati.",
  "ja424:8.1_0": "Addhā hi dānaṁ bahudhā pasatthaṁ,",
  "ja424:8.2_0": "Dānā ca kho dhammapadaṁva seyyo;",
  "ja424:8.3_0": "Pubbeva hi pubbatareva santo,",
  "ja424:8.4_0": "Nibbānamevajjhagamuṁ sapaññā”ti.",
  "ja424:9.1_0": "Ādittajātakaṁ aṭṭhamaṁ."
}