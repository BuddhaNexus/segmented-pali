{
  "thag16.1:0.1_0": "Theragāthā",
  "thag16.1:0.2_0": "Vīsatinipāta",
  "thag16.1:0.3_0": "Paṭhamavagga",
  "thag16.1:0.4_0": "16.1. Adhimuttattheragāthā",
  "thag16.1:1.1_0": "“Yaññatthaṁ vā dhanatthaṁ vā,",
  "thag16.1:1.2_0": "ye hanāma mayaṁ pure;",
  "thag16.1:1.3_0": "Avasesaṁ bhayaṁ hoti,",
  "thag16.1:1.4_0": "vedhanti vilapanti ca.",
  "thag16.1:2.1_0": "Tassa te natthi bhītattaṁ,",
  "thag16.1:2.2_0": "bhiyyo vaṇṇo pasīdati;",
  "thag16.1:2.3_0": "Kasmā na paridevesi,",
  "thag16.1:2.4_0": "evarūpe mahabbhaye”.",
  "thag16.1:3.1_0": "“Natthi cetasikaṁ dukkhaṁ,",
  "thag16.1:3.2_0": "anapekkhassa gāmaṇi;",
  "thag16.1:3.3_0": "Atikkantā bhayā sabbe,",
  "thag16.1:3.4_0": "khīṇasaṁyojanassa ve.",
  "thag16.1:4.1_0": "Khīṇāya bhavanettiyā,",
  "thag16.1:4.2_0": "diṭṭhe dhamme yathātathe;",
  "thag16.1:4.3_0": "Na bhayaṁ maraṇe hoti,",
  "thag16.1:4.4_0": "bhāranikkhepane yathā.",
  "thag16.1:5.1_0": "Suciṇṇaṁ brahmacariyaṁ me,",
  "thag16.1:5.2_0": "maggo cāpi subhāvito;",
  "thag16.1:5.3_0": "Maraṇe me bhayaṁ natthi,",
  "thag16.1:5.4_0": "rogānamiva saṅkhaye.",
  "thag16.1:6.1_0": "Suciṇṇaṁ brahmacariyaṁ me,",
  "thag16.1:6.2_0": "maggo cāpi subhāvito;",
  "thag16.1:6.3_0": "Nirassādā bhavā diṭṭhā,",
  "thag16.1:6.4_0": "visaṁ pitvāva chaḍḍitaṁ.",
  "thag16.1:7.1_0": "Pāragū anupādāno,",
  "thag16.1:7.2_0": "katakicco anāsavo;",
  "thag16.1:7.3_0": "Tuṭṭho āyukkhayā hoti,",
  "thag16.1:7.4_0": "mutto āghātanā yathā.",
  "thag16.1:8.1_0": "Uttamaṁ dhammataṁ patto,",
  "thag16.1:8.2_0": "sabbaloke anatthiko;",
  "thag16.1:8.3_0": "Ādittāva gharā mutto,",
  "thag16.1:8.4_0": "maraṇasmiṁ na socati.",
  "thag16.1:9.1_0": "Yadatthi saṅgataṁ kiñci,",
  "thag16.1:9.2_0": "bhavo vā yattha labbhati;",
  "thag16.1:9.3_0": "Sabbaṁ anissaraṁ etaṁ,",
  "thag16.1:9.4_0": "iti vuttaṁ mahesinā.",
  "thag16.1:10.1_0": "Yo taṁ tathā pajānāti,",
  "thag16.1:10.2_0": "yathā buddhena desitaṁ;",
  "thag16.1:10.3_0": "Na gaṇhāti bhavaṁ kiñci,",
  "thag16.1:10.4_0": "sutattaṁva ayoguḷaṁ.",
  "thag16.1:11.1_0": "Na me hoti ‘ahosin’ti,",
  "thag16.1:11.2_0": "‘bhavissan’ti na hoti me;",
  "thag16.1:11.3_0": "Saṅkhārā vigamissanti,",
  "thag16.1:11.4_0": "tattha kā paridevanā.",
  "thag16.1:12.1_0": "Suddhaṁ dhammasamuppādaṁ,",
  "thag16.1:12.2_0": "Suddhaṁ saṅkhārasantatiṁ;",
  "thag16.1:12.3_0": "Passantassa yathābhūtaṁ,",
  "thag16.1:12.4_0": "Na bhayaṁ hoti gāmaṇi.",
  "thag16.1:13.1_0": "Tiṇakaṭṭhasamaṁ lokaṁ,",
  "thag16.1:13.2_0": "yadā paññāya passati;",
  "thag16.1:13.3_0": "Mamattaṁ so asaṁvindaṁ,",
  "thag16.1:13.4_0": "‘natthi me’ti na socati.",
  "thag16.1:14.1_0": "Ukkaṇṭhāmi sarīrena,",
  "thag16.1:14.2_0": "bhavenamhi anatthiko;",
  "thag16.1:14.3_0": "Soyaṁ bhijjissati kāyo,",
  "thag16.1:14.4_0": "añño ca na bhavissati.",
  "thag16.1:15.1_0": "Yaṁ vo kiccaṁ sarīrena,",
  "thag16.1:15.2_0": "taṁ karotha yadicchatha;",
  "thag16.1:15.3_0": "Na me tappaccayā tattha,",
  "thag16.1:15.4_0": "doso pemañca hehiti”.",
  "thag16.1:16.1_0": "Tassa taṁ vacanaṁ sutvā,",
  "thag16.1:16.2_0": "abbhutaṁ lomahaṁsanaṁ;",
  "thag16.1:16.3_0": "Satthāni nikkhipitvāna,",
  "thag16.1:16.4_0": "māṇavā etadabravuṁ.",
  "thag16.1:17.1_0": "“Kiṁ bhadante karitvāna,",
  "thag16.1:17.2_0": "ko vā ācariyo tava;",
  "thag16.1:17.3_0": "Kassa sāsanamāgamma,",
  "thag16.1:17.4_0": "labbhate taṁ asokatā”.",
  "thag16.1:18.1_0": "“Sabbaññū sabbadassāvī,",
  "thag16.1:18.2_0": "jino ācariyo mama;",
  "thag16.1:18.3_0": "Mahākāruṇiko satthā,",
  "thag16.1:18.4_0": "sabbalokatikicchako.",
  "thag16.1:19.1_0": "Tenāyaṁ desito dhammo,",
  "thag16.1:19.2_0": "khayagāmī anuttaro;",
  "thag16.1:19.3_0": "Tassa sāsanamāgamma,",
  "thag16.1:19.4_0": "labbhate taṁ asokatā”.",
  "thag16.1:20.1_0": "Sutvāna corā isino subhāsitaṁ,",
  "thag16.1:20.2_0": "Nikkhippa satthāni ca āvudhāni ca;",
  "thag16.1:20.3_0": "Tamhā ca kammā viramiṁsu eke,",
  "thag16.1:20.4_0": "Eke ca pabbajjamarocayiṁsu.",
  "thag16.1:21.1_0": "Te pabbajitvā sugatassa sāsane,",
  "thag16.1:21.2_0": "Bhāvetva bojjhaṅgabalāni paṇḍitā;",
  "thag16.1:21.3_0": "Udaggacittā sumanā katindriyā,",
  "thag16.1:21.4_0": "Phusiṁsu nibbānapadaṁ asaṅkhatanti.",
  "thag16.1:21.5_0": "… Adhimutto thero …."
}