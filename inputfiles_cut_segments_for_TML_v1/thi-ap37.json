{
  "thi-ap37:0.1_0": "Therīapadāna",
  "thi-ap37:0.2_0": "Khattiyāvagga",
  "thi-ap37:0.3_0": "7 Aḍḍhakāsitherīapadāna",
  "thi-ap37:1.1_0": "“Imamhi bhaddake kappe,",
  "thi-ap37:1.2_0": "brahmabandhu mahāyaso;",
  "thi-ap37:1.3_0": "Kassapo nāma gottena,",
  "thi-ap37:1.4_0": "uppajji vadataṁ varo.",
  "thi-ap37:2.1_0": "Tadāhaṁ pabbajitvāna,",
  "thi-ap37:2.2_0": "tassa buddhassa sāsane;",
  "thi-ap37:2.3_0": "Saṁvutā pātimokkhamhi,",
  "thi-ap37:2.4_0": "indriyesu ca pañcasu.",
  "thi-ap37:3.1_0": "Mattaññunī ca asane,",
  "thi-ap37:3.2_0": "yuttā jāgariyepi ca;",
  "thi-ap37:3.3_0": "Vasantī yuttayogāhaṁ,",
  "thi-ap37:3.4_0": "bhikkhuniṁ vigatāsavaṁ.",
  "thi-ap37:4.1_0": "Akkosiṁ duṭṭhacittāhaṁ,",
  "thi-ap37:4.2_0": "gaṇiketi bhaṇiṁ tadā;",
  "thi-ap37:4.3_0": "Tena pāpena kammena,",
  "thi-ap37:4.4_0": "nirayamhi apaccisaṁ.",
  "thi-ap37:5.1_0": "Tena kammāvasesena,",
  "thi-ap37:5.2_0": "ajāyiṁ gaṇikākule;",
  "thi-ap37:5.3_0": "Bahusova parādhīnā,",
  "thi-ap37:5.4_0": "pacchimāya ca jātiyaṁ.",
  "thi-ap37:6.1_0": "Kāsīsu seṭṭhikulajā,",
  "thi-ap37:6.2_0": "brahmacārībalenahaṁ;",
  "thi-ap37:6.3_0": "Accharā viya devesu,",
  "thi-ap37:6.4_0": "ahosiṁ rūpasampadā.",
  "thi-ap37:7.1_0": "Disvāna dassanīyaṁ maṁ,",
  "thi-ap37:7.2_0": "giribbajapuruttame;",
  "thi-ap37:7.3_0": "Gaṇikatte nivesesuṁ,",
  "thi-ap37:7.4_0": "akkosanabalena me.",
  "thi-ap37:8.1_0": "Sāhaṁ sutvāna saddhammaṁ,",
  "thi-ap37:8.2_0": "buddhaseṭṭhena desitaṁ;",
  "thi-ap37:8.3_0": "Pubbavāsanasampannā,",
  "thi-ap37:8.4_0": "pabbajiṁ anagāriyaṁ.",
  "thi-ap37:9.1_0": "Tadūpasampadatthāya,",
  "thi-ap37:9.2_0": "gacchantī jinasantikaṁ;",
  "thi-ap37:9.3_0": "Magge dhutte ṭhite sutvā,",
  "thi-ap37:9.4_0": "labhiṁ dūtopasampadaṁ.",
  "thi-ap37:10.1_0": "Sabbakammaṁ parikkhīṇaṁ,",
  "thi-ap37:10.2_0": "puññaṁ pāpaṁ tatheva ca;",
  "thi-ap37:10.3_0": "Sabbasaṁsāramuttiṇṇā,",
  "thi-ap37:10.4_0": "gaṇikattañca khepitaṁ.",
  "thi-ap37:11.1_0": "Iddhīsu ca vasī homi,",
  "thi-ap37:11.2_0": "dibbāya sotadhātuyā;",
  "thi-ap37:11.3_0": "Cetopariyañāṇassa,",
  "thi-ap37:11.4_0": "vasī homi mahāmune.",
  "thi-ap37:12.1_0": "Pubbenivāsaṁ jānāmi,",
  "thi-ap37:12.2_0": "dibbacakkhu visodhitaṁ;",
  "thi-ap37:12.3_0": "Sabbāsavā parikkhīṇā,",
  "thi-ap37:12.4_0": "natthi dāni punabbhavo.",
  "thi-ap37:13.1_0": "Atthadhammaniruttīsu,",
  "thi-ap37:13.2_0": "paṭibhāne tatheva ca;",
  "thi-ap37:13.3_0": "Ñāṇaṁ mama mahāvīra,",
  "thi-ap37:13.4_0": "uppannaṁ tava santike.",
  "thi-ap37:14.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap37:14.2_0": "…pe…",
  "thi-ap37:14.3_0": "viharāmi anāsavā.",
  "thi-ap37:15.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap37:15.2_0": "…pe…",
  "thi-ap37:15.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap37:16.1_0": "Paṭisambhidā catasso,",
  "thi-ap37:16.2_0": "…pe…",
  "thi-ap37:16.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap37:17.1_0": "Itthaṁ sudaṁ aḍḍhakāsi bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap37:18.1_0": "Aḍḍhakāsitheriyāpadānaṁ sattamaṁ."
}