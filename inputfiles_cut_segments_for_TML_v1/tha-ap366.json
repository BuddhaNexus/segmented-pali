{
  "tha-ap366:0.1_0": "Therāpadāna",
  "tha-ap366:0.2_0": "Mandāravapupphiyavagga",
  "tha-ap366:0.3_0": "4. Kesarapupphiyattheraapadāna",
  "tha-ap366:1.1_0": "“Vijjādharo tadā āsiṁ,",
  "tha-ap366:1.2_0": "himavantamhi pabbate;",
  "tha-ap366:1.3_0": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap366:1.4_0": "caṅkamantaṁ mahāyasaṁ.",
  "tha-ap366:2.1_0": "Tīṇi kesarapupphāni,",
  "tha-ap366:2.2_0": "sīse katvānahaṁ tadā;",
  "tha-ap366:2.3_0": "Upasaṅkamma sambuddhaṁ,",
  "tha-ap366:2.4_0": "vessabhuṁ abhipūjayiṁ.",
  "tha-ap366:3.1_0": "Ekattiṁse ito kappe,",
  "tha-ap366:3.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap366:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap366:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap366:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap366:4.2_0": "…pe…",
  "tha-ap366:4.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap366:5.1_0": "Itthaṁ sudaṁ āyasmā kesarapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap366:6.1_0": "Kesarapupphiyattherassāpadānaṁ catutthaṁ."
}