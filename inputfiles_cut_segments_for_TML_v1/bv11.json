{
  "bv11:0.1_0": "Buddhavaṁsa",
  "bv11:0.2_0": "11. Nāradabuddhavaṁsa",
  "bv11:1.1_0": "“Padumassa aparena,",
  "bv11:1.2_0": "sambuddho dvipaduttamo;",
  "bv11:1.3_0": "Nārado nāma nāmena,",
  "bv11:1.4_0": "asamo appaṭipuggalo.",
  "bv11:2.1_0": "So buddho cakkavattissa,",
  "bv11:2.2_0": "jeṭṭho dayitaoraso;",
  "bv11:2.3_0": "Āmukkamālābharaṇo,",
  "bv11:2.4_0": "uyyānaṁ upasaṅkami.",
  "bv11:3.1_0": "Tatthāsi rukkho yasavipulo,",
  "bv11:3.2_0": "Abhirūpo brahā suci;",
  "bv11:3.3_0": "Tamajjhapatvā upanisīdi,",
  "bv11:3.4_0": "Mahāsoṇassa heṭṭhato.",
  "bv11:4.1_0": "Tattha ñāṇavaruppajji,",
  "bv11:4.2_0": "anantaṁ vajirūpamaṁ;",
  "bv11:4.3_0": "Tena vicini saṅkhāre,",
  "bv11:4.4_0": "ukkujjamavakujjakaṁ.",
  "bv11:5.1_0": "Tattha sabbakilesāni,",
  "bv11:5.2_0": "asesamabhivāhayi;",
  "bv11:5.3_0": "Pāpuṇī kevalaṁ bodhiṁ,",
  "bv11:5.4_0": "buddhañāṇe ca cuddasa.",
  "bv11:6.1_0": "Pāpuṇitvāna sambodhiṁ,",
  "bv11:6.2_0": "dhammacakkaṁ pavattayi;",
  "bv11:6.3_0": "Koṭisatasahassānaṁ,",
  "bv11:6.4_0": "paṭhamābhisamayo ahu.",
  "bv11:7.1_0": "Mahādoṇaṁ nāgarājaṁ,",
  "bv11:7.2_0": "vinayanto mahāmuni;",
  "bv11:7.3_0": "Pāṭiheraṁ tadākāsi,",
  "bv11:7.4_0": "dassayanto sadevake.",
  "bv11:8.1_0": "Tadā devamanussānaṁ,",
  "bv11:8.2_0": "tamhi dhammappakāsane;",
  "bv11:8.3_0": "Navutikoṭisahassāni,",
  "bv11:8.4_0": "tariṁsu sabbasaṁsayaṁ.",
  "bv11:9.1_0": "Yamhi kāle mahāvīro,",
  "bv11:9.2_0": "ovadī sakamatrajaṁ;",
  "bv11:9.3_0": "Asītikoṭisahassānaṁ,",
  "bv11:9.4_0": "tatiyābhisamayo ahu.",
  "bv11:10.1_0": "Sannipātā tayo āsuṁ,",
  "bv11:10.2_0": "nāradassa mahesino;",
  "bv11:10.3_0": "Koṭisatasahassānaṁ,",
  "bv11:10.4_0": "paṭhamo āsi samāgamo.",
  "bv11:11.1_0": "Yadā buddho buddhaguṇaṁ,",
  "bv11:11.2_0": "sanidānaṁ pakāsayi;",
  "bv11:11.3_0": "Navutikoṭisahassāni,",
  "bv11:11.4_0": "samiṁsu vimalā tadā.",
  "bv11:12.1_0": "Yadā verocano nāgo,",
  "bv11:12.2_0": "dānaṁ dadāti satthuno;",
  "bv11:12.3_0": "Tadā samiṁsu jinaputtā,",
  "bv11:12.4_0": "asītisatasahassiyo.",
  "bv11:13.1_0": "Ahaṁ tena samayena,",
  "bv11:13.2_0": "jaṭilo uggatāpano;",
  "bv11:13.3_0": "Antalikkhacaro āsiṁ,",
  "bv11:13.4_0": "pañcābhiññāsu pāragū.",
  "bv11:14.1_0": "Tadāpāhaṁ asamasamaṁ,",
  "bv11:14.2_0": "sasaṅghaṁ saparijjanaṁ;",
  "bv11:14.3_0": "Annapānena tappetvā,",
  "bv11:14.4_0": "candanenābhipūjayiṁ.",
  "bv11:15.1_0": "Sopi maṁ tadā byākāsi,",
  "bv11:15.2_0": "nārado lokanāyako;",
  "bv11:15.3_0": "‘Aparimeyyito kappe,",
  "bv11:15.4_0": "ayaṁ buddho bhavissati.",
  "bv11:16.1_0": "Padhānaṁ padahitvāna,",
  "bv11:16.2_0": "…pe…",
  "bv11:16.3_0": "hessāma sammukhā imaṁ’.",
  "bv11:17.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv11:17.2_0": "bhiyyo hāsetva mānasaṁ;",
  "bv11:17.3_0": "Adhiṭṭhahiṁ vataṁ uggaṁ,",
  "bv11:17.4_0": "dasapāramipūriyā.",
  "bv11:18.1_0": "Nagaraṁ dhaññavatī nāma,",
  "bv11:18.2_0": "sudevo nāma khattiyo;",
  "bv11:18.3_0": "Anomā nāma janikā,",
  "bv11:18.4_0": "nāradassa mahesino.",
  "bv11:19.1_0": "Navavassasahassāni,",
  "bv11:19.2_0": "agāraṁ ajjha so vasi;",
  "bv11:19.3_0": "Jito vijitābhirāmo,",
  "bv11:19.4_0": "tayo pāsādamuttamā.",
  "bv11:20.1_0": "Ticattārīsasahassāni,",
  "bv11:20.2_0": "nāriyo samalaṅkatā;",
  "bv11:20.3_0": "Vijitasenā nāma nārī,",
  "bv11:20.4_0": "nanduttaro nāma atrajo.",
  "bv11:21.1_0": "Nimitte caturo disvā,",
  "bv11:21.2_0": "Padasā gamanena nikkhami;",
  "bv11:21.3_0": "Sattāhaṁ padhānacāraṁ,",
  "bv11:21.4_0": "Acarī purisuttamo.",
  "bv11:22.1_0": "Brahmunā yācito santo,",
  "bv11:22.2_0": "nārado lokanāyako;",
  "bv11:22.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv11:22.4_0": "dhanañcuyyānamuttame.",
  "bv11:23.1_0": "Bhaddasālo jitamitto,",
  "bv11:23.2_0": "ahesuṁ aggasāvakā;",
  "bv11:23.3_0": "Vāseṭṭho nāmupaṭṭhāko,",
  "bv11:23.4_0": "nāradassa mahesino.",
  "bv11:24.1_0": "Uttarā phaggunī ceva,",
  "bv11:24.2_0": "ahesuṁ aggasāvikā;",
  "bv11:24.3_0": "Bodhi tassa bhagavato,",
  "bv11:24.4_0": "mahāsoṇoti vuccati.",
  "bv11:25.1_0": "Uggarindo vasabho ca,",
  "bv11:25.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv11:25.3_0": "Indāvarī ca vaṇḍī ca,",
  "bv11:25.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv11:26.1_0": "Aṭṭhāsītiratanāni,",
  "bv11:26.2_0": "accuggato mahāmuni;",
  "bv11:26.3_0": "Kañcanagghiyasaṅkāso,",
  "bv11:26.4_0": "dasasahassī virocati.",
  "bv11:27.1_0": "Tassa byāmappabhā kāyā,",
  "bv11:27.2_0": "niddhāvati disodisaṁ;",
  "bv11:27.3_0": "Nirantaraṁ divārattiṁ,",
  "bv11:27.4_0": "yojanaṁ pharate sadā.",
  "bv11:28.1_0": "Na keci tena samayena,",
  "bv11:28.2_0": "samantā yojane janā;",
  "bv11:28.3_0": "Ukkāpadīpe ujjālenti,",
  "bv11:28.4_0": "buddharaṁsīhi otthaṭā.",
  "bv11:29.1_0": "Navutivassasahassāni,",
  "bv11:29.2_0": "āyu vijjati tāvade;",
  "bv11:29.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv11:29.4_0": "tāresi janataṁ bahuṁ.",
  "bv11:30.1_0": "Yathā uḷūhi gaganaṁ,",
  "bv11:30.2_0": "vicittaṁ upasobhati;",
  "bv11:30.3_0": "Tatheva sāsanaṁ tassa,",
  "bv11:30.4_0": "arahantehi sobhati.",
  "bv11:31.1_0": "Saṁsārasotaṁ taraṇāya,",
  "bv11:31.2_0": "sesake paṭipannake;",
  "bv11:31.3_0": "Dhammasetuṁ daḷhaṁ katvā,",
  "bv11:31.4_0": "nibbuto so narāsabho.",
  "bv11:32.1_0": "Sopi buddho asamasamo,",
  "bv11:32.2_0": "Tepi khīṇāsavā atulatejā;",
  "bv11:32.3_0": "Sabbaṁ tamantarahitaṁ,",
  "bv11:32.4_0": "Nanu rittā sabbasaṅkhārā.",
  "bv11:33.1_0": "Nārado jinavasabho,",
  "bv11:33.2_0": "Nibbuto sudassane pure;",
  "bv11:33.3_0": "Tatthevassa thūpavaro,",
  "bv11:33.4_0": "Catuyojanamuggato”ti. ",
  "bv11:34.1_0": "Nāradassa bhagavato vaṁso navamo."
}