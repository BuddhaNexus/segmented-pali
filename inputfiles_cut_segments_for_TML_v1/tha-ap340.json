{
  "tha-ap340:0.1_0": "Therāpadāna",
  "tha-ap340:0.2_0": "Gandhodakavagga",
  "tha-ap340:0.3_0": "8. Uttareyyadāyakattheraapadāna",
  "tha-ap340:1.1_0": "“Nagare haṁsavatiyā,",
  "tha-ap340:1.2_0": "ahosiṁ brāhmaṇo tadā;",
  "tha-ap340:1.3_0": "Ajjhāyako mantadharo,",
  "tha-ap340:1.4_0": "tiṇṇaṁ vedāna pāragū.",
  "tha-ap340:2.1_0": "Purakkhato sasissehi,",
  "tha-ap340:2.2_0": "jātimā ca susikkhito;",
  "tha-ap340:2.3_0": "Toyābhisecanatthāya,",
  "tha-ap340:2.4_0": "nagarā nikkhamiṁ tadā.",
  "tha-ap340:3.1_0": "Padumuttaro nāma jino,",
  "tha-ap340:3.2_0": "sabbadhammāna pāragū;",
  "tha-ap340:3.3_0": "Khīṇāsavasahassehi,",
  "tha-ap340:3.4_0": "pāvisī nagaraṁ jino.",
  "tha-ap340:4.1_0": "Sucārurūpaṁ disvāna,",
  "tha-ap340:4.2_0": "āneñjakāritaṁ viya;",
  "tha-ap340:4.3_0": "Parivutaṁ arahantehi,",
  "tha-ap340:4.4_0": "disvā cittaṁ pasādayiṁ.",
  "tha-ap340:5.1_0": "Sirasmiṁ añjaliṁ katvā,",
  "tha-ap340:5.2_0": "namassitvāna subbataṁ;",
  "tha-ap340:5.3_0": "Pasannacitto sumano,",
  "tha-ap340:5.4_0": "uttarīyamadāsahaṁ.",
  "tha-ap340:6.1_0": "Ubho hatthehi paggayha,",
  "tha-ap340:6.2_0": "sāṭakaṁ ukkhipiṁ ahaṁ;",
  "tha-ap340:6.3_0": "Yāvatā buddhaparisā,",
  "tha-ap340:6.4_0": "tāva chādesi sāṭako.",
  "tha-ap340:7.1_0": "Piṇḍacāraṁ carantassa,",
  "tha-ap340:7.2_0": "mahābhikkhugaṇādino;",
  "tha-ap340:7.3_0": "Chadaṁ karonto aṭṭhāsi,",
  "tha-ap340:7.4_0": "hāsayanto mamaṁ tadā.",
  "tha-ap340:8.1_0": "Gharato nikkhamantassa,",
  "tha-ap340:8.2_0": "sayambhū aggapuggalo;",
  "tha-ap340:8.3_0": "Vīthiyaṁva ṭhito satthā,",
  "tha-ap340:8.4_0": "akā me anumodanaṁ.",
  "tha-ap340:9.1_0": "Pasannacitto sumano,",
  "tha-ap340:9.2_0": "yo me adāsi sāṭakaṁ;",
  "tha-ap340:9.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap340:9.4_0": "suṇotha mama bhāsato.",
  "tha-ap340:10.1_0": "‘Tiṁsakappasahassāni,",
  "tha-ap340:10.2_0": "devaloke ramissati;",
  "tha-ap340:10.3_0": "Paññāsakkhattuṁ devindo,",
  "tha-ap340:10.4_0": "devarajjaṁ karissati.",
  "tha-ap340:11.1_0": "Devaloke vasantassa,",
  "tha-ap340:11.2_0": "puññakammasamaṅgino;",
  "tha-ap340:11.3_0": "Samantā yojanasataṁ,",
  "tha-ap340:11.4_0": "dussacchannaṁ bhavissati.",
  "tha-ap340:12.1_0": "Chattiṁsakkhattuṁ rājā ca,",
  "tha-ap340:12.2_0": "cakkavattī bhavissati;",
  "tha-ap340:12.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap340:12.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap340:13.1_0": "Bhave saṁsaramānassa,",
  "tha-ap340:13.2_0": "puññakammasamaṅgino;",
  "tha-ap340:13.3_0": "Manasā patthitaṁ sabbaṁ,",
  "tha-ap340:13.4_0": "nibbattissati tāvade.",
  "tha-ap340:14.1_0": "Koseyyakambaliyāni,",
  "tha-ap340:14.2_0": "khomakappāsikāni ca;",
  "tha-ap340:14.3_0": "Mahagghāni ca dussāni,",
  "tha-ap340:14.4_0": "paṭilacchatiyaṁ naro.",
  "tha-ap340:15.1_0": "Manasā patthitaṁ sabbaṁ,",
  "tha-ap340:15.2_0": "paṭilacchatiyaṁ naro;",
  "tha-ap340:15.3_0": "Ekadussassa vipākaṁ,",
  "tha-ap340:15.4_0": "anubhossati sabbadā.",
  "tha-ap340:16.1_0": "So pacchā pabbajitvāna,",
  "tha-ap340:16.2_0": "sukkamūlena codito;",
  "tha-ap340:16.3_0": "Gotamassa bhagavato,",
  "tha-ap340:16.4_0": "dhammaṁ sacchikarissati’.",
  "tha-ap340:17.1_0": "Aho me sukataṁ kammaṁ,",
  "tha-ap340:17.2_0": "sabbaññussa mahesino;",
  "tha-ap340:17.3_0": "Ekāhaṁ sāṭakaṁ datvā,",
  "tha-ap340:17.4_0": "pattomhi amataṁ padaṁ.",
  "tha-ap340:18.1_0": "Maṇḍape rukkhamūle vā,",
  "tha-ap340:18.2_0": "vasato suññake ghare;",
  "tha-ap340:18.3_0": "Dhāreti dussachadanaṁ,",
  "tha-ap340:18.4_0": "samantā byāmato mama.",
  "tha-ap340:19.1_0": "Aviññattaṁ nivāsemi,",
  "tha-ap340:19.2_0": "cīvaraṁ paccayañcahaṁ;",
  "tha-ap340:19.3_0": "Lābhī annassa pānassa,",
  "tha-ap340:19.4_0": "uttareyyassidaṁ phalaṁ.",
  "tha-ap340:20.1_0": "Satasahassito kappe,",
  "tha-ap340:20.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap340:20.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap340:20.4_0": "vatthadānassidaṁ phalaṁ.",
  "tha-ap340:21.1_0": "Paṭisambhidā catasso,",
  "tha-ap340:21.2_0": "…pe…",
  "tha-ap340:21.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap340:22.1_0": "Itthaṁ sudaṁ āyasmā uttareyyadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap340:23.1_0": "Uttareyyadāyakattherassāpadānaṁ aṭṭhamaṁ."
}