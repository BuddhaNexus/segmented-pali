{
  "thag2.1:0.1_0": "Theragāthā",
  "thag2.1:0.2_0": "Dukanipāta",
  "thag2.1:0.3_0": "Paṭhamavagga",
  "thag2.1:0.4_0": "2.1. Uttarattheragāthā",
  "thag2.1:1.1_0": "“Natthi koci bhavo nicco,",
  "thag2.1:1.2_0": "saṅkhārā vāpi sassatā;",
  "thag2.1:1.3_0": "Uppajjanti ca te khandhā,",
  "thag2.1:1.4_0": "cavanti aparāparaṁ.",
  "thag2.1:2.1_0": "Etamādīnavaṁ ñatvā,",
  "thag2.1:2.2_0": "bhavenamhi anatthiko;",
  "thag2.1:2.3_0": "Nissaṭo sabbakāmehi,",
  "thag2.1:2.4_0": "patto me āsavakkhayo”ti.",
  "thag2.1:2.5_0": "Itthaṁ sudaṁ āyasmā uttaro thero gāthāyo abhāsitthāti."
}