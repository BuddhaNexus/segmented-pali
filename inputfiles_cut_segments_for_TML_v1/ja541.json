{
  "ja541:0.1_0": "Jātaka",
  "ja541:0.2_0": "Mahānipāta",
  "ja541:0.3_0": "Mūgapakkhavagga",
  "ja541:0.4_0": "4 Nimijātaka",
  "ja541:1.1_0": "Accheraṁ vata lokasmiṁ,",
  "ja541:1.2_0": "uppajjanti vicakkhaṇā;",
  "ja541:1.3_0": "Yadā ahu nimirājā,",
  "ja541:1.4_0": "paṇḍito kusalatthiko.",
  "ja541:2.1_0": "Rājā sabbavidehānaṁ,",
  "ja541:2.2_0": "adā dānaṁ arindamo;",
  "ja541:2.3_0": "Tassa taṁ dadato dānaṁ,",
  "ja541:2.4_0": "saṅkappo udapajjatha;",
  "ja541:2.5_0": "Dānaṁ vā brahmacariyaṁ vā,",
  "ja541:2.6_0": "katamaṁ su mahapphalaṁ.",
  "ja541:3.1_0": "Tassa saṅkappamaññāya,",
  "ja541:3.2_0": "maghavā devakuñjaro;",
  "ja541:3.3_0": "Sahassanetto pāturahu,",
  "ja541:3.4_0": "vaṇṇena vihanaṁ tamaṁ.",
  "ja541:4.1_0": "Salomahaṭṭho manujindo,",
  "ja541:4.2_0": "vāsavaṁ avacā nimi;",
  "ja541:4.3_0": "“Devatā nusi gandhabbo,",
  "ja541:4.4_0": "adu sakko purindado.",
  "ja541:5.1_0": "Na ca me tādiso vaṇṇo,",
  "ja541:5.2_0": "diṭṭho vā yadi vā suto;",
  "ja541:5.3_0": "Ācikkha me tvaṁ bhaddante,",
  "ja541:5.4_0": "kathaṁ jānemu taṁ mayaṁ”.",
  "ja541:6.1_0": "Salomahaṭṭhaṁ ñatvāna,",
  "ja541:6.2_0": "vāsavo avacā nimiṁ;",
  "ja541:6.3_0": "“Sakkohamasmi devindo,",
  "ja541:6.4_0": "āgatosmi tavantike;",
  "ja541:6.5_0": "Alomahaṭṭho manujinda,",
  "ja541:6.6_0": "puccha pañhaṁ yamicchasi”.",
  "ja541:7.1_0": "So ca tena katokāso,",
  "ja541:7.2_0": "vāsavaṁ avacā nimi;",
  "ja541:7.3_0": "“Pucchāmi taṁ mahārāja,",
  "ja541:7.4_0": "sabbabhūtānamissara;",
  "ja541:7.5_0": "Dānaṁ vā brahmacariyaṁ vā,",
  "ja541:7.6_0": "katamaṁ su mahapphalaṁ”.",
  "ja541:8.1_0": "So puṭṭho naradevena,",
  "ja541:8.2_0": "vāsavo avacā nimiṁ;",
  "ja541:8.3_0": "Vipākaṁ brahmacariyassa,",
  "ja541:8.4_0": "jānaṁ akkhāsijānato.",
  "ja541:9.1_0": "“Hīnena brahmacariyena,",
  "ja541:9.2_0": "khattiye upapajjati;",
  "ja541:9.3_0": "Majjhimena ca devattaṁ,",
  "ja541:9.4_0": "uttamena visujjhati.",
  "ja541:10.1_0": "Na hete sulabhā kāyā,",
  "ja541:10.2_0": "yācayogena kenaci;",
  "ja541:10.3_0": "Ye kāye upapajjanti,",
  "ja541:10.4_0": "anāgārā tapassino.",
  "ja541:11.1_0": "Dudīpo sāgaro selo,",
  "ja541:11.2_0": "mujakindo bhagīraso;",
  "ja541:11.3_0": "Usindaro kassapo ca,",
  "ja541:11.4_0": "asako ca puthujjano.",
  "ja541:12.1_0": "Ete caññe ca rājāno,",
  "ja541:12.2_0": "khattiyā brāhmaṇā bahū;",
  "ja541:12.3_0": "Puthuyaññaṁ yajitvāna,",
  "ja541:12.4_0": "petattaṁ nātivattisuṁ.",
  "ja541:13.1_0": "(…)",
  "ja541:14.1_0": "Atha yīme avattiṁsu,",
  "ja541:14.2_0": "anāgārā tapassino;",
  "ja541:14.3_0": "Sattisayo yāmahanu,",
  "ja541:14.4_0": "somayāmo manojavo.",
  "ja541:15.1_0": "Samuddo māgho bharato ca,",
  "ja541:15.2_0": "isi kālapurakkhato;",
  "ja541:15.3_0": "Aṅgīraso kassapo ca,",
  "ja541:15.4_0": "kisavaccho akatti ca.",
  "ja541:16.1_0": "Uttarena nadī sīdā,",
  "ja541:16.2_0": "gambhīrā duratikkamā;",
  "ja541:16.3_0": "Naḷaggivaṇṇā jotanti,",
  "ja541:16.4_0": "sadā kañcanapabbatā.",
  "ja541:17.1_0": "Parūḷhakacchā tagarā,",
  "ja541:17.2_0": "rūḷhakacchā vanā nagā;",
  "ja541:17.3_0": "Tatrāsuṁ dasasahassā,",
  "ja541:17.4_0": "porāṇā isayo pure.",
  "ja541:18.1_0": "Ahaṁ seṭṭhosmi dānena,",
  "ja541:18.2_0": "saṁyamena damena ca;",
  "ja541:18.3_0": "Anuttaraṁ vataṁ katvā,",
  "ja541:18.4_0": "pakiracārī samāhite.",
  "ja541:19.1_0": "Jātimantaṁ ajaccañca,",
  "ja541:19.2_0": "ahaṁ ujugataṁ naraṁ;",
  "ja541:19.3_0": "Ativelaṁ namassissaṁ,",
  "ja541:19.4_0": "kammabandhū hi māṇavā.",
  "ja541:20.1_0": "Sabbe vaṇṇā adhammaṭṭhā,",
  "ja541:20.2_0": "patanti nirayaṁ adho;",
  "ja541:20.3_0": "Sabbe vaṇṇā visujjhanti,",
  "ja541:20.4_0": "caritvā dhammamuttamaṁ”.",
  "ja541:21.1_0": "Idaṁ vatvāna maghavā,",
  "ja541:21.2_0": "devarājā sujampati;",
  "ja541:21.3_0": "Vedehamanusāsitvā,",
  "ja541:21.4_0": "saggakāyaṁ apakkami.",
  "ja541:22.1_0": "“Imaṁ bhonto nisāmetha,",
  "ja541:22.2_0": "yāvantettha samāgatā;",
  "ja541:22.3_0": "Dhammikānaṁ manussānaṁ,",
  "ja541:22.4_0": "vaṇṇaṁ uccāvacaṁ bahuṁ.",
  "ja541:23.1_0": "Yathā ayaṁ nimirājā,",
  "ja541:23.2_0": "paṇḍito kusalatthiko;",
  "ja541:23.3_0": "Rājā sabbavidehānaṁ,",
  "ja541:23.4_0": "adā dānaṁ arindamo.",
  "ja541:24.1_0": "Tassa taṁ dadato dānaṁ,",
  "ja541:24.2_0": "saṅkappo udapajjatha;",
  "ja541:24.3_0": "Dānaṁ vā brahmacariyaṁ vā,",
  "ja541:24.4_0": "katamaṁ su mahapphalaṁ”.",
  "ja541:25.1_0": "“Abbhuto vata lokasmiṁ,",
  "ja541:25.2_0": "uppajji lomahaṁsano;",
  "ja541:25.3_0": "Dibbo ratho pāturahu,",
  "ja541:25.4_0": "vedehassa yasassino”.",
  "ja541:26.1_0": "Devaputto mahiddhiko,",
  "ja541:26.2_0": "mātali devasārathi;",
  "ja541:26.3_0": "Nimantayittha rājānaṁ,",
  "ja541:26.4_0": "vedehaṁ mithilaggahaṁ.",
  "ja541:27.1_0": "“Ehimaṁ rathamāruyha,",
  "ja541:27.2_0": "rājaseṭṭha disampati;",
  "ja541:27.3_0": "Devā dassanakāmā te,",
  "ja541:27.4_0": "tāvatiṁsā saindakā;",
  "ja541:27.5_0": "Saramānā hi te devā,",
  "ja541:27.6_0": "sudhammāyaṁ samacchare”.",
  "ja541:28.1_0": "Tato rājā taramāno,",
  "ja541:28.2_0": "vedeho mithilaggaho;",
  "ja541:28.3_0": "Āsanā vuṭṭhahitvāna,",
  "ja541:28.4_0": "pamukho rathamāruhi.",
  "ja541:29.1_0": "Abhirūḷhaṁ rathaṁ dibbaṁ,",
  "ja541:29.2_0": "mātali etadabravi;",
  "ja541:29.3_0": "“Kena taṁ nemi maggena,",
  "ja541:29.4_0": "rājaseṭṭha disampati;",
  "ja541:29.5_0": "Yena vā pāpakammantā,",
  "ja541:29.6_0": "puññakammā ca ye narā”.",
  "ja541:30.1_0": "“Ubhayeneva maṁ nehi,",
  "ja541:30.2_0": "mātali devasārathi;",
  "ja541:30.3_0": "Yena vā pāpakammantā,",
  "ja541:30.4_0": "puññakammā ca ye narā”.",
  "ja541:31.1_0": "“Kena taṁ paṭhamaṁ nemi,",
  "ja541:31.2_0": "rājaseṭṭha disampati;",
  "ja541:31.3_0": "Yena vā pāpakammantā,",
  "ja541:31.4_0": "puññakammā ca ye narā”.",
  "ja541:32.1_0": "“Niraye tāva passāmi,",
  "ja541:32.2_0": "āvāse pāpakamminaṁ;",
  "ja541:32.3_0": "Ṭhānāni luddakammānaṁ,",
  "ja541:32.4_0": "dussīlānañca yā gati”.",
  "ja541:33.1_0": "Dassesi mātali rañño,",
  "ja541:33.2_0": "duggaṁ vetaraṇiṁ nadiṁ;",
  "ja541:33.3_0": "Kuthitaṁ khārasaṁyuttaṁ,",
  "ja541:33.4_0": "tattaṁ aggisikhūpamaṁ.",
  "ja541:34.1_0": "Nimī have mātalimajjhabhāsatha,",
  "ja541:34.2_0": "Disvā janaṁ patamānaṁ vidugge;",
  "ja541:34.3_0": "“Bhayañhi maṁ vindati sūta disvā,",
  "ja541:34.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:34.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:34.6_0": "Yeme janā vetaraṇiṁ patanti”.",
  "ja541:35.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:35.2_0": "mātali devasārathi;",
  "ja541:35.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:35.4_0": "jānaṁ akkhāsijānato.",
  "ja541:36.1_0": "“Ye dubbale balavantā jīvaloke,",
  "ja541:36.2_0": "Hiṁsanti rosanti supāpadhammā;",
  "ja541:36.3_0": "Te luddakammā pasavetva pāpaṁ,",
  "ja541:36.4_0": "Teme janā vetaraṇiṁ patanti”.",
  "ja541:37.1_0": "“Sāmā ca soṇā sabalā ca gijjhā,",
  "ja541:37.2_0": "Kākolasaṅghā adanti bheravā;",
  "ja541:37.3_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:37.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:37.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:37.6_0": "Yeme jane kākolasaṅghā adanti”.",
  "ja541:38.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:38.2_0": "mātali devasārathi;",
  "ja541:38.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:38.4_0": "jānaṁ akkhāsijānato.",
  "ja541:39.1_0": "“Ye kecime maccharino kadariyā,",
  "ja541:39.2_0": "Paribhāsakā samaṇabrāhmaṇānaṁ;",
  "ja541:39.3_0": "Hiṁsanti rosanti supāpadhammā,",
  "ja541:39.4_0": "Te luddakammā pasavetva pāpaṁ;",
  "ja541:39.5_0": "Teme jane kākolasaṅghā adanti”.",
  "ja541:40.1_0": "“Sajotibhūtā pathaviṁ kamanti,",
  "ja541:40.2_0": "Tattehi khandhehi ca pothayanti;",
  "ja541:40.3_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:40.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:40.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:40.6_0": "Yeme janā khandhahatā sayanti”.",
  "ja541:41.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:41.2_0": "mātali devasārathi;",
  "ja541:41.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:41.4_0": "jānaṁ akkhāsijānato.",
  "ja541:42.1_0": "“Ye jīvalokasmi supāpadhammino,",
  "ja541:42.2_0": "Narañca nāriñca apāpadhammaṁ;",
  "ja541:42.3_0": "Hiṁsanti rosanti supāpadhammā,",
  "ja541:42.4_0": "Te luddakammā pasavetva pāpaṁ;",
  "ja541:42.5_0": "Teme janā khandhahatā sayanti”.",
  "ja541:43.1_0": "“Aṅgārakāsuṁ apare phuṇanti,",
  "ja541:43.2_0": "Narā rudantā paridaḍḍhagattā;",
  "ja541:43.3_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:43.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:43.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:43.6_0": "Yeme janā aṅgārakāsuṁ phuṇanti”.",
  "ja541:44.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:44.2_0": "mātali devasārathi;",
  "ja541:44.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:44.4_0": "jānaṁ akkhāsijānato.",
  "ja541:45.1_0": "“Ye keci pūgāya dhanassa hetu,",
  "ja541:45.2_0": "Sakkhiṁ karitvā iṇaṁ jāpayanti;",
  "ja541:45.3_0": "Te jāpayitvā janataṁ janinda,",
  "ja541:45.4_0": "Te luddakammā pasavetva pāpaṁ;",
  "ja541:45.5_0": "Teme janā aṅgārakāsuṁ phuṇanti”.",
  "ja541:46.1_0": "“Sajotibhūtā jalitā padittā,",
  "ja541:46.2_0": "Padissati mahatī lohakumbhī;",
  "ja541:46.3_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:46.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:46.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:46.6_0": "Yeme janā avaṁsirā lohakumbhiṁ patanti”.",
  "ja541:47.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:47.2_0": "mātali devasārathi;",
  "ja541:47.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:47.4_0": "jānaṁ akkhāsijānato.",
  "ja541:48.1_0": "“Ye sīlavantaṁ samaṇaṁ brāhmaṇaṁ vā,",
  "ja541:48.2_0": "Hiṁsanti rosanti supāpadhammā;",
  "ja541:48.3_0": "Te luddakammā pasavetva pāpaṁ,",
  "ja541:48.4_0": "Teme janā avaṁsirā lohakumbhiṁ patanti”.",
  "ja541:49.1_0": "“Luñcanti gīvaṁ atha veṭhayitvā,",
  "ja541:49.2_0": "Uṇhodakasmiṁ pakiledayitvā;",
  "ja541:49.3_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:49.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:49.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:49.6_0": "Yeme janā luttasirā sayanti”.",
  "ja541:50.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:50.2_0": "mātali devasārathi;",
  "ja541:50.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:50.4_0": "jānaṁ akkhāsijānato.",
  "ja541:51.1_0": "“Ye jīvalokasmi supāpadhammino,",
  "ja541:51.2_0": "Pakkhī gahetvāna viheṭhayanti te;",
  "ja541:51.3_0": "Viheṭhayitvā sakuṇaṁ janinda,",
  "ja541:51.4_0": "Te luddakammā pasavetva pāpaṁ;",
  "ja541:51.5_0": "Teme janā luttasirā sayanti”.",
  "ja541:52.1_0": "“Pahūtatoyā anigādhakūlā,",
  "ja541:52.2_0": "Nadī ayaṁ sandati suppatitthā;",
  "ja541:52.3_0": "Ghammābhitattā manujā pivanti,",
  "ja541:52.4_0": "Pītañca tesaṁ bhusa hoti pāni.",
  "ja541:53.1_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:53.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:53.3_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:53.4_0": "Pītañca tesaṁ bhusa hoti pāni”.",
  "ja541:54.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:54.2_0": "mātali devasārathi;",
  "ja541:54.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:54.4_0": "jānaṁ akkhāsijānato.",
  "ja541:55.1_0": "“Ye suddhadhaññaṁ palāsena missaṁ,",
  "ja541:55.2_0": "Asuddhakammā kayino dadanti;",
  "ja541:55.3_0": "Ghammābhitattāna pipāsitānaṁ,",
  "ja541:55.4_0": "Pītañca tesaṁ bhusa hoti pāni”.",
  "ja541:56.1_0": "“Usūhi sattīhi ca tomarehi,",
  "ja541:56.2_0": "Dubhayāni passāni tudanti kandataṁ;",
  "ja541:56.3_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:56.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:56.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:56.6_0": "Yeme janā sattihatā sayanti”.",
  "ja541:57.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:57.2_0": "mātali devasārathi;",
  "ja541:57.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:57.4_0": "jānaṁ akkhāsijānato.",
  "ja541:58.1_0": "“Ye jīvalokasmi asādhukammino,",
  "ja541:58.2_0": "Adinnamādāya karonti jīvikaṁ;",
  "ja541:58.3_0": "Dhaññaṁ dhanaṁ rajataṁ jātarūpaṁ,",
  "ja541:58.4_0": "Ajeḷakañcāpi pasuṁ mahiṁsaṁ;",
  "ja541:58.5_0": "Te luddakammā pasavetva pāpaṁ,",
  "ja541:58.6_0": "Teme janā sattihatā sayanti”.",
  "ja541:59.1_0": "“Gīvāya baddhā kissa ime puneke,",
  "ja541:59.2_0": "Aññe vikantā bilakatā sayanti;",
  "ja541:59.3_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:59.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:59.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:59.6_0": "Yeme janā bilakatā sayanti”.",
  "ja541:60.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:60.2_0": "mātali devasārathi;",
  "ja541:60.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:60.4_0": "jānaṁ akkhāsijānato.",
  "ja541:61.1_0": "“Orabbhikā sūkarikā ca macchikā,",
  "ja541:61.2_0": "Pasuṁ mahiṁsañca ajeḷakañca;",
  "ja541:61.3_0": "Hantvāna sūnesu pasārayiṁsu,",
  "ja541:61.4_0": "Te luddakammā pasavetva pāpaṁ;",
  "ja541:61.5_0": "Teme janā bilakatā sayanti”.",
  "ja541:62.1_0": "“Rahado ayaṁ muttakarīsapūro,",
  "ja541:62.2_0": "Duggandharūpo asuci pūti vāti;",
  "ja541:62.3_0": "Khudāparetā manujā adanti,",
  "ja541:62.4_0": "Bhayañhi maṁ vindati sūta disvā;",
  "ja541:62.5_0": "Pucchāmi taṁ mātali devasārathi,",
  "ja541:62.6_0": "Ime nu maccā kimakaṁsu pāpaṁ;",
  "ja541:62.7_0": "Yeme janā muttakarīsabhakkhā”.",
  "ja541:63.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:63.2_0": "mātali devasārathi;",
  "ja541:63.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:63.4_0": "jānaṁ akkhāsijānato.",
  "ja541:64.1_0": "“Ye kecime kāraṇikā virosakā,",
  "ja541:64.2_0": "Paresaṁ hiṁsāya sadā niviṭṭhā;",
  "ja541:64.3_0": "Te luddakammā pasavetva pāpaṁ,",
  "ja541:64.4_0": "Mittadduno mīḷhamadanti bālā”.",
  "ja541:65.1_0": "“Rahado ayaṁ lohitapubbapūro,",
  "ja541:65.2_0": "Duggandharūpo asuci pūti vāti;",
  "ja541:65.3_0": "Ghammābhitattā manujā pivanti,",
  "ja541:65.4_0": "Bhayañhi maṁ vindati sūta disvā;",
  "ja541:65.5_0": "Pucchāmi taṁ mātali devasārathi,",
  "ja541:65.6_0": "Ime nu maccā kimakaṁsu pāpaṁ;",
  "ja541:65.7_0": "Yeme janā lohitapubbabhakkhā”.",
  "ja541:66.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:66.2_0": "mātali devasārathi;",
  "ja541:66.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:66.4_0": "jānaṁ akkhāsijānato.",
  "ja541:67.1_0": "“Ye mātaraṁ vā pitaraṁ vā jīvaloke,",
  "ja541:67.2_0": "Pārājikā arahante hananti;",
  "ja541:67.3_0": "Te luddakammā pasavetva pāpaṁ,",
  "ja541:67.4_0": "Teme janā lohitapubbabhakkhā”.",
  "ja541:68.1_0": "“Jivhañca passa baḷisena viddhaṁ,",
  "ja541:68.2_0": "Vihataṁ yathā saṅkusatena cammaṁ;",
  "ja541:68.3_0": "Phandanti macchāva thalamhi khittā,",
  "ja541:68.4_0": "Muñcanti kheḷaṁ rudamānā kimete.",
  "ja541:69.1_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:69.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:69.3_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:69.4_0": "Yeme janā vaṅkaghastā sayanti”.",
  "ja541:70.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:70.2_0": "mātali devasārathi;",
  "ja541:70.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:70.4_0": "jānaṁ akkhāsijānato.",
  "ja541:71.1_0": "“Ye keci sandhānagatā manussā,",
  "ja541:71.2_0": "Agghena agghaṁ kayaṁ hāpayanti;",
  "ja541:71.3_0": "Kuṭena kuṭaṁ dhanalobhahetu,",
  "ja541:71.4_0": "Channaṁ yathā vāricaraṁ vadhāya.",
  "ja541:72.1_0": "Na hi kuṭakārissa bhavanti tāṇā,",
  "ja541:72.2_0": "Sakehi kammehi purakkhatassa;",
  "ja541:72.3_0": "Te luddakammā pasavetva pāpaṁ,",
  "ja541:72.4_0": "Teme janā vaṅkaghastā sayanti”.",
  "ja541:73.1_0": "“Nārī imā samparibhinnagattā,",
  "ja541:73.2_0": "Paggayha kandanti bhuje dujaccā;",
  "ja541:73.3_0": "Sammakkhitā lohitapubbalittā,",
  "ja541:73.4_0": "Gāvo yathā āghātane vikantā;",
  "ja541:73.5_0": "Tā bhūmibhāgasmiṁ sadā nikhātā,",
  "ja541:73.6_0": "Khandhātivattanti sajotibhūtā.",
  "ja541:74.1_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:74.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:74.3_0": "Imā nu nāriyo kimakaṁsu pāpaṁ,",
  "ja541:74.4_0": "Yā bhūmibhāgasmiṁ sadā nikhātā;",
  "ja541:74.5_0": "Khandhātivattanti sajotibhūtā”.",
  "ja541:75.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:75.2_0": "mātali devasārathi;",
  "ja541:75.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:75.4_0": "jānaṁ akkhāsijānato.",
  "ja541:76.1_0": "“Kolitthiyāyo idha jīvaloke,",
  "ja541:76.2_0": "Asuddhakammā asataṁ acāruṁ;",
  "ja541:76.3_0": "Tā dittarūpā pati vippahāya,",
  "ja541:76.4_0": "Aññaṁ acāruṁ ratikhiḍḍahetu;",
  "ja541:76.5_0": "Tā jīvalokasmiṁ ramāpayitvā,",
  "ja541:76.6_0": "Khandhātivattanti sajotibhūtā”.",
  "ja541:77.1_0": "“Pāde gahetvā kissa ime puneke,",
  "ja541:77.2_0": "Avaṁsirā narake pātayanti;",
  "ja541:77.3_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:77.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:77.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:77.6_0": "Yeme janā avaṁsirā narake pātayanti”.",
  "ja541:78.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:78.2_0": "mātali devasārathi;",
  "ja541:78.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:78.4_0": "jānaṁ akkhāsijānato.",
  "ja541:79.1_0": "“Ye jīvalokasmi asādhukammino,",
  "ja541:79.2_0": "Parassa dārāni atikkamanti;",
  "ja541:79.3_0": "Te tādisā uttamabhaṇḍathenā,",
  "ja541:79.4_0": "Teme janā avaṁsirā narake pātayanti.",
  "ja541:80.1_0": "Te vassapūgāni bahūni tattha,",
  "ja541:80.2_0": "Nirayesu dukkhaṁ vedanaṁ vedayanti;",
  "ja541:80.3_0": "Na hi pāpakārissa bhavanti tāṇā,",
  "ja541:80.4_0": "Sakehi kammehi purakkhatassa;",
  "ja541:80.5_0": "Te luddakammā pasavetva pāpaṁ,",
  "ja541:80.6_0": "Teme janā avaṁsirā narake pātayanti”.",
  "ja541:81.1_0": "“Uccāvacāme vividhā upakkamā,",
  "ja541:81.2_0": "Nirayesu dissanti sughorarūpā;",
  "ja541:81.3_0": "Bhayañhi maṁ vindati sūta disvā,",
  "ja541:81.4_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:81.5_0": "Ime nu maccā kimakaṁsu pāpaṁ,",
  "ja541:81.6_0": "Yeme janā adhimattā dukkhā tibbā;",
  "ja541:81.7_0": "Kharā kaṭukā vedanā vedayanti”.",
  "ja541:82.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:82.2_0": "mātali devasārathi;",
  "ja541:82.3_0": "Vipākaṁ pāpakammānaṁ,",
  "ja541:82.4_0": "jānaṁ akkhāsijānato.",
  "ja541:83.1_0": "“Ye jīvalokasmi supāpadiṭṭhino,",
  "ja541:83.2_0": "Vissāsakammāni karonti mohā;",
  "ja541:83.3_0": "Parañca diṭṭhīsu samādapenti,",
  "ja541:83.4_0": "Te pāpadiṭṭhiṁ pasavetva pāpaṁ;",
  "ja541:83.5_0": "Teme janā adhimattā dukkhā tibbā,",
  "ja541:83.6_0": "Kharā kaṭukā vedanā vedayanti”.",
  "ja541:84.1_0": "“Viditāni te mahārāja,",
  "ja541:84.2_0": "āvāsaṁ pāpakamminaṁ;",
  "ja541:84.3_0": "Ṭhānāni luddakammānaṁ,",
  "ja541:84.4_0": "dussīlānañca yā gati;",
  "ja541:84.5_0": "Uyyāhi dāni rājīsi,",
  "ja541:84.6_0": "devarājassa santike.",
  "ja541:85.1_0": "(…)",
  "ja541:86.1_0": "Pañcathūpaṁ dissatidaṁ vimānaṁ,",
  "ja541:86.2_0": "Mālāpiḷandhā sayanassa majjhe;",
  "ja541:86.3_0": "Tatthacchati nārī mahānubhāvā,",
  "ja541:86.4_0": "Uccāvacaṁ iddhi vikubbamānā”.",
  "ja541:87.1_0": "“Vittī hi maṁ vindati sūta disvā,",
  "ja541:87.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:87.3_0": "Ayaṁ nu nārī kimakāsi sādhuṁ,",
  "ja541:87.4_0": "Yā modati saggapattā vimāne”.",
  "ja541:88.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:88.2_0": "mātali devasārathi;",
  "ja541:88.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:88.4_0": "jānaṁ akkhāsijānato.",
  "ja541:89.1_0": "“Yadi te sutā bīraṇī jīvaloke,",
  "ja541:89.2_0": "Āmāyadāsī ahu brāhmaṇassa;",
  "ja541:89.3_0": "Sā pattakāle atithiṁ viditvā,",
  "ja541:89.4_0": "Mātāva puttaṁ sakimābhinandī;",
  "ja541:89.5_0": "Saṁyamā saṁvibhāgā ca,",
  "ja541:89.6_0": "Sā vimānasmi modati.",
  "ja541:90.1_0": "Daddallamānā ābhenti,",
  "ja541:90.2_0": "vimānā satta nimmitā;",
  "ja541:90.3_0": "Tattha yakkho mahiddhiko,",
  "ja541:90.4_0": "sabbābharaṇabhūsito;",
  "ja541:90.5_0": "Samantā anupariyāti,",
  "ja541:90.6_0": "nārīgaṇapurakkhato”.",
  "ja541:91.1_0": "“Vittī hi maṁ vindati sūta disvā,",
  "ja541:91.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:91.3_0": "Ayaṁ nu macco kimakāsi sādhuṁ,",
  "ja541:91.4_0": "Yo modati saggapatto vimāne”.",
  "ja541:92.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:92.2_0": "mātali devasārathi;",
  "ja541:92.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:92.4_0": "jānaṁ akkhāsijānato.",
  "ja541:93.1_0": "“Soṇadinno gahapati,",
  "ja541:93.2_0": "esa dānapatī ahu;",
  "ja541:93.3_0": "Esa pabbajituddissa,",
  "ja541:93.4_0": "vihāre satta kārayi.",
  "ja541:94.1_0": "Sakkaccaṁ te upaṭṭhāsi,",
  "ja541:94.2_0": "bhikkhavo tattha vāsike;",
  "ja541:94.3_0": "Acchādanañca bhattañca,",
  "ja541:94.4_0": "senāsanaṁ padīpiyaṁ;",
  "ja541:94.5_0": "Adāsi ujubhūtesu,",
  "ja541:94.6_0": "vippasannena cetasā.",
  "ja541:95.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "ja541:95.2_0": "Yā ca pakkhassa aṭṭhamī;",
  "ja541:95.3_0": "Pāṭihāriyapakkhañca,",
  "ja541:95.4_0": "Aṭṭhaṅgasusamāhitaṁ.",
  "ja541:96.1_0": "Uposathaṁ upavasī,",
  "ja541:96.2_0": "sadā sīlesu saṁvuto;",
  "ja541:96.3_0": "Saṁyamā saṁvibhāgā ca,",
  "ja541:96.4_0": "so vimānasmi modati.",
  "ja541:97.1_0": "Pabhāsati midaṁ byamhaṁ,",
  "ja541:97.2_0": "phalikāsu sunimmitaṁ;",
  "ja541:97.3_0": "Nārīvaragaṇākiṇṇaṁ,",
  "ja541:97.4_0": "kūṭāgāravarocitaṁ;",
  "ja541:97.5_0": "Upetaṁ annapānehi,",
  "ja541:97.6_0": "naccagītehi cūbhayaṁ”.",
  "ja541:98.1_0": "“Vittī hi maṁ vindati sūta disvā,",
  "ja541:98.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:98.3_0": "Ime nu maccā kimakaṁsu sādhuṁ,",
  "ja541:98.4_0": "Ye modare saggapattā vimāne”.",
  "ja541:99.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:99.2_0": "mātali devasārathi;",
  "ja541:99.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:99.4_0": "jānaṁ akkhāsijānato.",
  "ja541:100.1_0": "“Yā kāci nāriyo idha jīvaloke,",
  "ja541:100.2_0": "Sīlavantiyo upāsikā;",
  "ja541:100.3_0": "Dāne ratā niccaṁ pasannacittā,",
  "ja541:100.4_0": "Sacce ṭhitā uposathe appamattā;",
  "ja541:100.5_0": "Saṁyamā saṁvibhāgā ca,",
  "ja541:100.6_0": "Tā vimānasmi modare”.",
  "ja541:101.1_0": "“Pabhāsati midaṁ byamhaṁ,",
  "ja541:101.2_0": "veḷuriyāsu nimmitaṁ;",
  "ja541:101.3_0": "Upetaṁ bhūmibhāgehi,",
  "ja541:101.4_0": "vibhattaṁ bhāgaso mitaṁ.",
  "ja541:102.1_0": "Āḷambarā mudiṅgā ca,",
  "ja541:102.2_0": "naccagītā suvāditā;",
  "ja541:102.3_0": "Dibbā saddā niccharanti,",
  "ja541:102.4_0": "savanīyā manoramā.",
  "ja541:103.1_0": "Nāhaṁ evaṅgataṁ jātu,",
  "ja541:103.2_0": "evaṁsuruciraṁ pure;",
  "ja541:103.3_0": "Saddaṁ samabhijānāmi,",
  "ja541:103.4_0": "diṭṭhaṁ vā yadi vā sutaṁ.",
  "ja541:104.1_0": "Vittī hi maṁ vindati sūta disvā,",
  "ja541:104.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:104.3_0": "Ime nu maccā kimakaṁsu sādhuṁ,",
  "ja541:104.4_0": "Ye modare saggapattā vimāne”.",
  "ja541:105.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:105.2_0": "mātali devasārathi;",
  "ja541:105.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:105.4_0": "jānaṁ akkhāsijānato.",
  "ja541:106.1_0": "“Ye keci maccā idha jīvaloke,",
  "ja541:106.2_0": "Sīlavantā upāsakā;",
  "ja541:106.3_0": "Ārāme udapāne ca,",
  "ja541:106.4_0": "Papā saṅkamanāni ca;",
  "ja541:106.5_0": "Arahante sītibhūte,",
  "ja541:106.6_0": "Sakkaccaṁ paṭipādayuṁ.",
  "ja541:107.1_0": "Cīvaraṁ piṇḍapātañca,",
  "ja541:107.2_0": "paccayaṁ sayanāsanaṁ;",
  "ja541:107.3_0": "Adaṁsu ujubhūtesu,",
  "ja541:107.4_0": "vippasannena cetasā.",
  "ja541:108.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "ja541:108.2_0": "yā ca pakkhassa aṭṭhamī;",
  "ja541:108.3_0": "Pāṭihāriyapakkhañca,",
  "ja541:108.4_0": "aṭṭhaṅgasusamāhitaṁ.",
  "ja541:109.1_0": "Uposathaṁ upavasuṁ,",
  "ja541:109.2_0": "sadā sīlesu saṁvutā;",
  "ja541:109.3_0": "Saṁyamā saṁvibhāgā ca,",
  "ja541:109.4_0": "te vimānasmi modare”.",
  "ja541:110.1_0": "“Pabhāsati midaṁ byamhaṁ,",
  "ja541:110.2_0": "phalikāsu sunimmitaṁ;",
  "ja541:110.3_0": "Nārīvaragaṇākiṇṇaṁ,",
  "ja541:110.4_0": "kūṭāgāravarocitaṁ.",
  "ja541:111.1_0": "Upetaṁ annapānehi,",
  "ja541:111.2_0": "naccagītehi cūbhayaṁ;",
  "ja541:111.3_0": "Najjo cānupariyāti,",
  "ja541:111.4_0": "nānāpupphadumāyutā.",
  "ja541:112.1_0": "Vittī hi maṁ vindati sūta disvā,",
  "ja541:112.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:112.3_0": "Ayaṁ nu macco kimakāsi sādhuṁ,",
  "ja541:112.4_0": "Yo modatī saggapatto vimāne”.",
  "ja541:113.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:113.2_0": "mātali devasārathi;",
  "ja541:113.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:113.4_0": "jānaṁ akkhāsijānato.",
  "ja541:114.1_0": "“Mithilāyaṁ gahapati,",
  "ja541:114.2_0": "esa dānapatī ahu;",
  "ja541:114.3_0": "Ārāme udapāne ca,",
  "ja541:114.4_0": "papā saṅkamanāni ca;",
  "ja541:114.5_0": "Arahante sītibhūte,",
  "ja541:114.6_0": "sakkaccaṁ paṭipādayi.",
  "ja541:115.1_0": "Cīvaraṁ piṇḍapātañca,",
  "ja541:115.2_0": "paccayaṁ sayanāsanaṁ;",
  "ja541:115.3_0": "Adāsi ujubhūtesu,",
  "ja541:115.4_0": "vippasannena cetasā.",
  "ja541:116.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "ja541:116.2_0": "yā ca pakkhassa aṭṭhamī;",
  "ja541:116.3_0": "Pāṭihāriyapakkhañca,",
  "ja541:116.4_0": "aṭṭhaṅgasusamāhitaṁ.",
  "ja541:117.1_0": "Uposathaṁ upavasī,",
  "ja541:117.2_0": "sadā sīlesu saṁvuto;",
  "ja541:117.3_0": "Saṁyamā saṁvibhāgā ca,",
  "ja541:117.4_0": "so vimānasmi modati”.",
  "ja541:118.1_0": "“Pabhāsati midaṁ byamhaṁ,",
  "ja541:118.2_0": "phalikāsu sunimmitaṁ;",
  "ja541:118.3_0": "Nārīvaragaṇākiṇṇaṁ,",
  "ja541:118.4_0": "kūṭāgāravarocitaṁ.",
  "ja541:119.1_0": "Upetaṁ annapānehi,",
  "ja541:119.2_0": "naccagītehi cūbhayaṁ;",
  "ja541:119.3_0": "Najjo cānupariyāti,",
  "ja541:119.4_0": "nānāpupphadumāyutā.",
  "ja541:120.1_0": "Rājāyatanā kapitthā ca,",
  "ja541:120.2_0": "ambā sālā ca jambuyo;",
  "ja541:120.3_0": "Tindukā ca piyālā ca,",
  "ja541:120.4_0": "dumā niccaphalā bahū.",
  "ja541:121.1_0": "Vittī hi maṁ vindati sūta disvā,",
  "ja541:121.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:121.3_0": "Ayaṁ nu macco kimakāsi sādhuṁ,",
  "ja541:121.4_0": "Yo modatī saggapatto vimāne”.",
  "ja541:122.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:122.2_0": "mātali devasārathi;",
  "ja541:122.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:122.4_0": "jānaṁ akkhāsijānato.",
  "ja541:123.1_0": "“Mithilāyaṁ gahapati,",
  "ja541:123.2_0": "esa dānapatī ahu;",
  "ja541:123.3_0": "Ārāme udapāne ca,",
  "ja541:123.4_0": "papā saṅkamanāni ca;",
  "ja541:123.5_0": "Arahante sītibhūte,",
  "ja541:123.6_0": "sakkaccaṁ paṭipādayi.",
  "ja541:124.1_0": "Cīvaraṁ piṇḍapātañca,",
  "ja541:124.2_0": "paccayaṁ sayanāsanaṁ;",
  "ja541:124.3_0": "Adāsi ujubhūtesu,",
  "ja541:124.4_0": "vippasannena cetasā.",
  "ja541:125.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "ja541:125.2_0": "yā ca pakkhassa aṭṭhamī;",
  "ja541:125.3_0": "Pāṭihāriyapakkhañca,",
  "ja541:125.4_0": "aṭṭhaṅgasusamāhitaṁ.",
  "ja541:126.1_0": "Uposathaṁ upavasī,",
  "ja541:126.2_0": "sadā sīlesu saṁvuto;",
  "ja541:126.3_0": "Saṁyamā saṁvibhāgā ca,",
  "ja541:126.4_0": "so vimānasmi modati”.",
  "ja541:127.1_0": "“Pabhāsati midaṁ byamhaṁ,",
  "ja541:127.2_0": "veḷuriyāsu nimmitaṁ;",
  "ja541:127.3_0": "Upetaṁ bhūmibhāgehi,",
  "ja541:127.4_0": "vibhattaṁ bhāgaso mitaṁ.",
  "ja541:128.1_0": "Āḷambarā mudiṅgā ca,",
  "ja541:128.2_0": "naccagītā suvāditā;",
  "ja541:128.3_0": "Dibyā saddā niccharanti,",
  "ja541:128.4_0": "savanīyā manoramā.",
  "ja541:129.1_0": "Nāhaṁ evaṅgataṁ jātu,",
  "ja541:129.2_0": "evaṁsuruciraṁ pure;",
  "ja541:129.3_0": "Saddaṁ samabhijānāmi,",
  "ja541:129.4_0": "diṭṭhaṁ vā yadi vā sutaṁ.",
  "ja541:130.1_0": "Vittī hi maṁ vindati sūta disvā,",
  "ja541:130.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:130.3_0": "Ayaṁ nu macco kimakāsi sādhuṁ,",
  "ja541:130.4_0": "Yo modatī saggapatto vimāne”.",
  "ja541:131.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:131.2_0": "mātali devasārathi;",
  "ja541:131.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:131.4_0": "jānaṁ akkhāsijānato.",
  "ja541:132.1_0": "“Bārāṇasiyaṁ gahapati,",
  "ja541:132.2_0": "esa dānapatī ahu;",
  "ja541:132.3_0": "Ārāme udapāne ca,",
  "ja541:132.4_0": "papā saṅkamanāni ca;",
  "ja541:132.5_0": "Arahante sītibhūte,",
  "ja541:132.6_0": "sakkaccaṁ paṭipādayi.",
  "ja541:133.1_0": "Cīvaraṁ piṇḍapātañca,",
  "ja541:133.2_0": "paccayaṁ sayanāsanaṁ;",
  "ja541:133.3_0": "Adāsi ujubhūtesu,",
  "ja541:133.4_0": "vippasannena cetasā.",
  "ja541:134.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "ja541:134.2_0": "yā ca pakkhassa aṭṭhamī;",
  "ja541:134.3_0": "Pāṭihāriyapakkhañca,",
  "ja541:134.4_0": "aṭṭhaṅgasusamāhitaṁ.",
  "ja541:135.1_0": "Uposathaṁ upavasī,",
  "ja541:135.2_0": "sadā sīlesu saṁvuto;",
  "ja541:135.3_0": "Saṁyamā saṁvibhāgā ca,",
  "ja541:135.4_0": "so vimānasmi modati”.",
  "ja541:136.1_0": "“Yathā udayamādicco,",
  "ja541:136.2_0": "hoti lohitako mahā;",
  "ja541:136.3_0": "Tathūpamaṁ idaṁ byamhaṁ,",
  "ja541:136.4_0": "jātarūpassa nimmitaṁ.",
  "ja541:137.1_0": "Vittī hi maṁ vindati sūta disvā,",
  "ja541:137.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:137.3_0": "Ayaṁ nu macco kimakāsi sādhuṁ,",
  "ja541:137.4_0": "Yo modatī saggapatto vimāne”.",
  "ja541:138.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:138.2_0": "mātali devasārathi;",
  "ja541:138.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:138.4_0": "jānaṁ akkhāsijānato.",
  "ja541:139.1_0": "“Sāvatthiyaṁ gahapati,",
  "ja541:139.2_0": "esa dānapatī ahu;",
  "ja541:139.3_0": "Ārāme udapāne ca,",
  "ja541:139.4_0": "papā saṅkamanāni ca;",
  "ja541:139.5_0": "Arahante sītibhūte,",
  "ja541:139.6_0": "sakkaccaṁ paṭipādayi.",
  "ja541:140.1_0": "Cīvaraṁ piṇḍapātañca,",
  "ja541:140.2_0": "paccayaṁ sayanāsanaṁ;",
  "ja541:140.3_0": "Adāsi ujubhūtesu,",
  "ja541:140.4_0": "vippasannena cetasā.",
  "ja541:141.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "ja541:141.2_0": "yā ca pakkhassa aṭṭhamī;",
  "ja541:141.3_0": "Pāṭihāriyapakkhañca,",
  "ja541:141.4_0": "aṭṭhaṅgasusamāhitaṁ.",
  "ja541:142.1_0": "Uposathaṁ upavasī,",
  "ja541:142.2_0": "sadā sīlesu saṁvuto;",
  "ja541:142.3_0": "Saṁyamā saṁvibhāgā ca,",
  "ja541:142.4_0": "so vimānasmi modati”.",
  "ja541:143.1_0": "“Vehāyasāme bahukā,",
  "ja541:143.2_0": "jātarūpassa nimmitā;",
  "ja541:143.3_0": "Daddallamānā ābhenti,",
  "ja541:143.4_0": "vijjuvabbhaghanantare.",
  "ja541:144.1_0": "(…)",
  "ja541:145.1_0": "Vittī hi maṁ vindati sūta disvā,",
  "ja541:145.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:145.3_0": "Ime nu maccā kimakaṁsu sādhuṁ,",
  "ja541:145.4_0": "Ye modare saggapattā vimāne”.",
  "ja541:146.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:146.2_0": "mātali devasārathi;",
  "ja541:146.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:146.4_0": "jānaṁ akkhāsijānato.",
  "ja541:147.1_0": "“Saddhāya suniviṭṭhāya,",
  "ja541:147.2_0": "saddhamme suppavedite;",
  "ja541:147.3_0": "Akaṁsu satthu vacanaṁ,",
  "ja541:147.4_0": "sammāsambuddhasāsane;",
  "ja541:147.5_0": "Tesaṁ etāni ṭhānāni,",
  "ja541:147.6_0": "yāni tvaṁ rāja passasi.",
  "ja541:148.1_0": "Viditāni te mahārāja,",
  "ja541:148.2_0": "āvāsaṁ pāpakamminaṁ;",
  "ja541:148.3_0": "Atho kalyāṇakammānaṁ,",
  "ja541:148.4_0": "ṭhānāni viditāni te;",
  "ja541:148.5_0": "Uyyāhi dāni rājīsi,",
  "ja541:148.6_0": "devarājassa santike”.",
  "ja541:149.1_0": "Sahassayuttaṁ hayavāhiṁ,",
  "ja541:149.2_0": "dibbayānamadhiṭṭhito;",
  "ja541:149.3_0": "Yāyamāno mahārājā,",
  "ja541:149.4_0": "addā sīdantare nage;",
  "ja541:149.5_0": "Disvānāmantayī sūtaṁ,",
  "ja541:149.6_0": "“ime ke nāma pabbatā”.",
  "ja541:150.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:150.2_0": "mātali devasārathi;",
  "ja541:150.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:150.4_0": "jānaṁ akkhāsijānato",
  "ja541:151.1_0": "“Sudassano karavīko,",
  "ja541:151.2_0": "īsadharo yugandharo;",
  "ja541:151.3_0": "Nemindharo vinatako,",
  "ja541:151.4_0": "assakaṇṇo girī brahā.",
  "ja541:152.1_0": "Ete sīdantare nagā,",
  "ja541:152.2_0": "anupubbasamuggatā;",
  "ja541:152.3_0": "Mahārājānamāvāsā,",
  "ja541:152.4_0": "yāni tvaṁ rāja passasi”.",
  "ja541:153.1_0": "“Anekarūpaṁ ruciraṁ,",
  "ja541:153.2_0": "nānācitraṁ pakāsati;",
  "ja541:153.3_0": "Ākiṇṇaṁ indasadisehi,",
  "ja541:153.4_0": "byaggheheva surakkhitaṁ.",
  "ja541:154.1_0": "Vittī hi maṁ vindati sūta disvā,",
  "ja541:154.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:154.3_0": "Imaṁ nu dvāraṁ kimabhaññamāhu,",
  "ja541:154.4_0": "Manorama dissati dūratova”.",
  "ja541:155.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:155.2_0": "mātali devasārathi;",
  "ja541:155.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:155.4_0": "jānaṁ akkhāsijānato.",
  "ja541:156.1_0": "“Citrakūṭoti yaṁ āhu,",
  "ja541:156.2_0": "devarājapavesanaṁ;",
  "ja541:156.3_0": "Sudassanassa girino,",
  "ja541:156.4_0": "dvārañhetaṁ pakāsati.",
  "ja541:157.1_0": "Anekarūpaṁ ruciraṁ,",
  "ja541:157.2_0": "nānācitraṁ pakāsati;",
  "ja541:157.3_0": "Ākiṇṇaṁ indasadisehi,",
  "ja541:157.4_0": "byaggheheva surakkhitaṁ;",
  "ja541:157.5_0": "Pavisetena rājīsi,",
  "ja541:157.6_0": "arajaṁ bhūmimakkama”.",
  "ja541:158.1_0": "Sahassayuttaṁ hayavāhiṁ,",
  "ja541:158.2_0": "dibbayānamadhiṭṭhito;",
  "ja541:158.3_0": "Yāyamāno mahārājā,",
  "ja541:158.4_0": "addā devasabhaṁ idaṁ.",
  "ja541:159.1_0": "“Yathā sarade ākāse,",
  "ja541:159.2_0": "nīlobhāso padissati;",
  "ja541:159.3_0": "Tathūpamaṁ idaṁ byamhaṁ,",
  "ja541:159.4_0": "veḷuriyāsu nimmitaṁ.",
  "ja541:160.1_0": "Vittī hi maṁ vindati sūta disvā,",
  "ja541:160.2_0": "Pucchāmi taṁ mātali devasārathi;",
  "ja541:160.3_0": "Imaṁ nu byamhaṁ kimabhaññamāhu,",
  "ja541:160.4_0": "Manorama dissati dūratova”.",
  "ja541:161.1_0": "Tassa puṭṭho viyākāsi,",
  "ja541:161.2_0": "mātali devasārathi;",
  "ja541:161.3_0": "Vipākaṁ puññakammānaṁ,",
  "ja541:161.4_0": "jānaṁ akkhāsijānato.",
  "ja541:162.1_0": "“Sudhammā iti yaṁ āhu,",
  "ja541:162.2_0": "passesā dissate sabhā;",
  "ja541:162.3_0": "Veḷuriyārucirā citrā,",
  "ja541:162.4_0": "dhārayanti sunimmitā.",
  "ja541:163.1_0": "Aṭṭhaṁsā sukatā thambhā,",
  "ja541:163.2_0": "sabbe veḷuriyāmayā;",
  "ja541:163.3_0": "Yattha devā tāvatiṁsā,",
  "ja541:163.4_0": "sabbe indapurohitā.",
  "ja541:164.1_0": "Atthaṁ devamanussānaṁ,",
  "ja541:164.2_0": "cintayantā samacchare;",
  "ja541:164.3_0": "Pavisetena rājīsi,",
  "ja541:164.4_0": "devānaṁ anumodanaṁ”.",
  "ja541:165.1_0": "Taṁ devā paṭinandiṁsu,",
  "ja541:165.2_0": "disvā rājānamāgataṁ;",
  "ja541:165.3_0": "“Svāgataṁ te mahārāja,",
  "ja541:165.4_0": "atho te adurāgataṁ;",
  "ja541:165.5_0": "Nisīda dāni rājīsi,",
  "ja541:165.6_0": "devarājassa santike”.",
  "ja541:166.1_0": "Sakkopi paṭinandittha,",
  "ja541:166.2_0": "vedehaṁ mithilaggahaṁ;",
  "ja541:166.3_0": "Nimantayittha kāmehi,",
  "ja541:166.4_0": "āsanena ca vāsavo.",
  "ja541:167.1_0": "“Sādhu khosi anuppatto,",
  "ja541:167.2_0": "āvāsaṁ vasavattinaṁ;",
  "ja541:167.3_0": "Vasa devesu rājīsi,",
  "ja541:167.4_0": "sabbakāmasamiddhisu;",
  "ja541:167.5_0": "Tāvatiṁsesu devesu,",
  "ja541:167.6_0": "bhuñja kāme amānuse”.",
  "ja541:168.1_0": "“Yathā yācitakaṁ yānaṁ,",
  "ja541:168.2_0": "yathā yācitakaṁ dhanaṁ;",
  "ja541:168.3_0": "Evaṁsampadamevetaṁ,",
  "ja541:168.4_0": "yaṁ parato dānapaccayā.",
  "ja541:169.1_0": "Na cāhametamicchāmi,",
  "ja541:169.2_0": "yaṁ parato dānapaccayā;",
  "ja541:169.3_0": "Sayaṅkatāni puññāni,",
  "ja541:169.4_0": "taṁ me āveṇikaṁ dhanaṁ.",
  "ja541:170.1_0": "Sohaṁ gantvā manussesu,",
  "ja541:170.2_0": "kāhāmi kusalaṁ bahuṁ;",
  "ja541:170.3_0": "Dānena samacariyāya,",
  "ja541:170.4_0": "saṁyamena damena ca;",
  "ja541:170.5_0": "Yaṁ katvā sukhito hoti,",
  "ja541:170.6_0": "na ca pacchānutappati”.",
  "ja541:171.1_0": "“Bahūpakāro no bhavaṁ,",
  "ja541:171.2_0": "mātali devasārathi;",
  "ja541:171.3_0": "Yo me kalyāṇakammānaṁ,",
  "ja541:171.4_0": "pāpānaṁ paṭidassayi”.",
  "ja541:172.1_0": "Idaṁ vatvā nimirājā,",
  "ja541:172.2_0": "vedeho mithilaggaho;",
  "ja541:172.3_0": "Puthuyaññaṁ yajitvāna,",
  "ja541:172.4_0": "saṁyamaṁ ajjhupāgamīti.",
  "ja541:173.1_0": "Nimijātakaṁ catutthaṁ."
}