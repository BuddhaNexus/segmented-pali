{
  "tha-ap93:0.1_0": "Therāpadāna",
  "tha-ap93:0.2_0": "Sudhāvagga",
  "tha-ap93:0.3_0": "1. Sudhāpiṇḍiyattheraapadāna",
  "tha-ap93:1.1_0": "“Pūjārahe pūjayato,",
  "tha-ap93:1.2_0": "buddhe yadi va sāvake;",
  "tha-ap93:1.3_0": "Papañcasamatikkante,",
  "tha-ap93:1.4_0": "tiṇṇasokapariddave.",
  "tha-ap93:2.1_0": "Te tādise pūjayato,",
  "tha-ap93:2.2_0": "nibbute akutobhaye;",
  "tha-ap93:2.3_0": "Na sakkā puññaṁ saṅkhātuṁ,",
  "tha-ap93:2.4_0": "imettamapi kenaci.",
  "tha-ap93:3.1_0": "Catunnamapi dīpānaṁ,",
  "tha-ap93:3.2_0": "issaraṁ yodha kāraye;",
  "tha-ap93:3.3_0": "Ekissā pūjanāyetaṁ,",
  "tha-ap93:3.4_0": "kalaṁ nāgghati soḷasiṁ.",
  "tha-ap93:4.1_0": "Siddhatthassa naraggassa,",
  "tha-ap93:4.2_0": "cetiye phalitantare;",
  "tha-ap93:4.3_0": "Sudhāpiṇḍo mayā dinno,",
  "tha-ap93:4.4_0": "vippasannena cetasā.",
  "tha-ap93:5.1_0": "Catunnavutito kappe,",
  "tha-ap93:5.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap93:5.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap93:5.4_0": "paṭisaṅkhārassidaṁ phalaṁ.",
  "tha-ap93:6.1_0": "Ito tiṁsatikappamhi,",
  "tha-ap93:6.2_0": "paṭisaṅkhārasavhayā;",
  "tha-ap93:6.3_0": "Sattaratanasampannā,",
  "tha-ap93:6.4_0": "terasa cakkavattino.",
  "tha-ap93:7.1_0": "Paṭisambhidā catasso,",
  "tha-ap93:7.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap93:7.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap93:7.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap93:8.1_0": "Itthaṁ sudaṁ āyasmā sudhāpiṇḍiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap93:9.1_0": "Sudhāpiṇḍiyattherassāpadānaṁ paṭhamaṁ."
}