{
  "thig13.3:0.1_0": "Therīgāthā",
  "thig13.3:0.2_0": "Vīsatinipāta",
  "thig13.3:0.3_0": "3. Cāpātherīgāthā",
  "thig13.3:1.1_0": "“Laṭṭhihattho pure āsi,",
  "thig13.3:1.2_0": "so dāni migaluddako;",
  "thig13.3:1.3_0": "Āsāya palipā ghorā,",
  "thig13.3:1.4_0": "nāsakkhi pārametave.",
  "thig13.3:2.1_0": "Sumattaṁ maṁ maññamānā,",
  "thig13.3:2.2_0": "cāpā puttamatosayi;",
  "thig13.3:2.3_0": "Cāpāya bandhanaṁ chetvā,",
  "thig13.3:2.4_0": "pabbajissaṁ punopahaṁ”.",
  "thig13.3:3.1_0": "“Mā me kujjhi mahāvīra,",
  "thig13.3:3.2_0": "mā me kujjhi mahāmuni;",
  "thig13.3:3.3_0": "Na hi kodhaparetassa,",
  "thig13.3:3.4_0": "suddhi atthi kuto tapo”.",
  "thig13.3:4.1_0": "“Pakkamissañca nāḷāto,",
  "thig13.3:4.2_0": "kodha nāḷāya vacchati;",
  "thig13.3:4.3_0": "Bandhantī itthirūpena,",
  "thig13.3:4.4_0": "samaṇe dhammajīvino”.",
  "thig13.3:5.1_0": "“Ehi kāḷa nivattassu,",
  "thig13.3:5.2_0": "bhuñja kāme yathā pure;",
  "thig13.3:5.3_0": "Ahañca te vasīkatā,",
  "thig13.3:5.4_0": "ye ca me santi ñātakā”.",
  "thig13.3:6.1_0": "“Etto cāpe catubbhāgaṁ,",
  "thig13.3:6.2_0": "yathā bhāsasi tvañca me;",
  "thig13.3:6.3_0": "Tayi rattassa posassa,",
  "thig13.3:6.4_0": "uḷāraṁ vata taṁ siyā”.",
  "thig13.3:7.1_0": "“Kāḷaṅginiṁva takkāriṁ,",
  "thig13.3:7.2_0": "pupphitaṁ girimuddhani;",
  "thig13.3:7.3_0": "Phullaṁ dālimalaṭṭhiṁva,",
  "thig13.3:7.4_0": "antodīpeva pāṭaliṁ.",
  "thig13.3:8.1_0": "Haricandanalittaṅgiṁ,",
  "thig13.3:8.2_0": "kāsikuttamadhāriniṁ;",
  "thig13.3:8.3_0": "Taṁ maṁ rūpavatiṁ santiṁ,",
  "thig13.3:8.4_0": "kassa ohāya gacchasi”.",
  "thig13.3:9.1_0": "“Sākuntikova sakuṇiṁ,",
  "thig13.3:9.2_0": "yathā bandhitumicchati;",
  "thig13.3:9.3_0": "Āharimena rūpena,",
  "thig13.3:9.4_0": "na maṁ tvaṁ bādhayissasi”.",
  "thig13.3:10.1_0": "“Imañca me puttaphalaṁ,",
  "thig13.3:10.2_0": "kāḷa uppāditaṁ tayā;",
  "thig13.3:10.3_0": "Taṁ maṁ puttavatiṁ santiṁ,",
  "thig13.3:10.4_0": "kassa ohāya gacchasi”.",
  "thig13.3:11.1_0": "“Jahanti putte sappaññā,",
  "thig13.3:11.2_0": "tato ñātī tato dhanaṁ;",
  "thig13.3:11.3_0": "Pabbajanti mahāvīrā,",
  "thig13.3:11.4_0": "nāgo chetvāva bandhanaṁ”.",
  "thig13.3:12.1_0": "“Idāni te imaṁ puttaṁ,",
  "thig13.3:12.2_0": "Daṇḍena churikāya vā;",
  "thig13.3:12.3_0": "Bhūmiyaṁ vā nisumbhissaṁ,",
  "thig13.3:12.4_0": "Puttasokā na gacchasi”.",
  "thig13.3:13.1_0": "“Sace puttaṁ siṅgālānaṁ,",
  "thig13.3:13.2_0": "kukkurānaṁ padāhisi;",
  "thig13.3:13.3_0": "Na maṁ puttakatte jammi,",
  "thig13.3:13.4_0": "punarāvattayissasi”.",
  "thig13.3:14.1_0": "“Handa kho dāni bhaddante,",
  "thig13.3:14.2_0": "kuhiṁ kāḷa gamissasi;",
  "thig13.3:14.3_0": "Katamaṁ gāmanigamaṁ,",
  "thig13.3:14.4_0": "nagaraṁ rājadhāniyo”.",
  "thig13.3:15.1_0": "“Ahumha pubbe gaṇino,",
  "thig13.3:15.2_0": "Assamaṇā samaṇamānino;",
  "thig13.3:15.3_0": "Gāmena gāmaṁ vicarimha,",
  "thig13.3:15.4_0": "Nagare rājadhāniyo.",
  "thig13.3:16.1_0": "Eso hi bhagavā buddho,",
  "thig13.3:16.2_0": "nadiṁ nerañjaraṁ pati;",
  "thig13.3:16.3_0": "Sabbadukkhappahānāya,",
  "thig13.3:16.4_0": "dhammaṁ deseti pāṇinaṁ;",
  "thig13.3:16.5_0": "Tassāhaṁ santikaṁ gacchaṁ,",
  "thig13.3:16.6_0": "so me satthā bhavissati”.",
  "thig13.3:17.1_0": "“Vandanaṁ dāni vajjāsi,",
  "thig13.3:17.2_0": "lokanāthaṁ anuttaraṁ;",
  "thig13.3:17.3_0": "Padakkhiṇañca katvāna,",
  "thig13.3:17.4_0": "ādiseyyāsi dakkhiṇaṁ”.",
  "thig13.3:18.1_0": "“Etaṁ kho labbhamamhehi,",
  "thig13.3:18.2_0": "yathā bhāsasi tvañca me;",
  "thig13.3:18.3_0": "Vandanaṁ dāni te vajjaṁ,",
  "thig13.3:18.4_0": "lokanāthaṁ anuttaraṁ;",
  "thig13.3:18.5_0": "Padakkhiṇañca katvāna,",
  "thig13.3:18.6_0": "ādisissāmi dakkhiṇaṁ”.",
  "thig13.3:19.1_0": "Tato ca kāḷo pakkāmi,",
  "thig13.3:19.2_0": "nadiṁ nerañjaraṁ pati;",
  "thig13.3:19.3_0": "So addasāsi sambuddhaṁ,",
  "thig13.3:19.4_0": "desentaṁ amataṁ padaṁ.",
  "thig13.3:20.1_0": "Dukkhaṁ dukkhasamuppādaṁ,",
  "thig13.3:20.2_0": "dukkhassa ca atikkamaṁ;",
  "thig13.3:20.3_0": "Ariyaṁ caṭṭhaṅgikaṁ maggaṁ,",
  "thig13.3:20.4_0": "dukkhūpasamagāminaṁ.",
  "thig13.3:21.1_0": "Tassa pādāni vanditvā,",
  "thig13.3:21.2_0": "Katvāna naṁ padakkhiṇaṁ;",
  "thig13.3:21.3_0": "Cāpāya ādisitvāna,",
  "thig13.3:21.4_0": "Pabbajiṁ anagāriyaṁ;",
  "thig13.3:21.5_0": "Tisso vijjā anuppattā,",
  "thig13.3:21.6_0": "Kataṁ buddhassa sāsanaṁ.",
  "thig13.3:22.1_0": "… Cāpā therī …."
}