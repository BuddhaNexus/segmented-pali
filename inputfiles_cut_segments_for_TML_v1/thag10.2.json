{
  "thag10.2:0.1_0": "Theragāthā",
  "thag10.2:0.2_0": "Dasakanipāta",
  "thag10.2:0.3_0": "Paṭhamavagga",
  "thag10.2:0.4_0": "10.2. Ekavihāriyattheragāthā",
  "thag10.2:1.1_0": "“Purato pacchato vāpi,",
  "thag10.2:1.2_0": "aparo ce na vijjati;",
  "thag10.2:1.3_0": "Atīva phāsu bhavati,",
  "thag10.2:1.4_0": "ekassa vasato vane.",
  "thag10.2:2.1_0": "Handa eko gamissāmi,",
  "thag10.2:2.2_0": "araññaṁ buddhavaṇṇitaṁ;",
  "thag10.2:2.3_0": "Phāsu ekavihārissa,",
  "thag10.2:2.4_0": "pahitattassa bhikkhuno.",
  "thag10.2:3.1_0": "Yogi-pītikaraṁ rammaṁ,",
  "thag10.2:3.2_0": "mattakuñjarasevitaṁ;",
  "thag10.2:3.3_0": "Eko attavasī khippaṁ,",
  "thag10.2:3.4_0": "pavisissāmi kānanaṁ.",
  "thag10.2:4.1_0": "Supupphite sītavane,",
  "thag10.2:4.2_0": "sītale girikandare;",
  "thag10.2:4.3_0": "Gattāni parisiñcitvā,",
  "thag10.2:4.4_0": "caṅkamissāmi ekako.",
  "thag10.2:5.1_0": "Ekākiyo adutiyo,",
  "thag10.2:5.2_0": "ramaṇīye mahāvane;",
  "thag10.2:5.3_0": "Kadāhaṁ viharissāmi,",
  "thag10.2:5.4_0": "katakicco anāsavo.",
  "thag10.2:6.1_0": "Evaṁ me kattukāmassa,",
  "thag10.2:6.2_0": "adhippāyo samijjhatu;",
  "thag10.2:6.3_0": "Sādhayissāmahaṁyeva,",
  "thag10.2:6.4_0": "nāñño aññassa kārako.",
  "thag10.2:7.1_0": "Esa bandhāmi sannāhaṁ,",
  "thag10.2:7.2_0": "pavisissāmi kānanaṁ;",
  "thag10.2:7.3_0": "Na tato nikkhamissāmi,",
  "thag10.2:7.4_0": "appatto āsavakkhayaṁ.",
  "thag10.2:8.1_0": "Mālute upavāyante,",
  "thag10.2:8.2_0": "sīte surabhigandhike;",
  "thag10.2:8.3_0": "Avijjaṁ dālayissāmi,",
  "thag10.2:8.4_0": "nisinno nagamuddhani.",
  "thag10.2:9.1_0": "Vane kusumasañchanne,",
  "thag10.2:9.2_0": "pabbhāre nūna sītale;",
  "thag10.2:9.3_0": "Vimuttisukhena sukhito,",
  "thag10.2:9.4_0": "ramissāmi giribbaje.",
  "thag10.2:10.1_0": "Sohaṁ paripuṇṇasaṅkappo,",
  "thag10.2:10.2_0": "cando pannaraso yathā;",
  "thag10.2:10.3_0": "Sabbāsavaparikkhīṇo,",
  "thag10.2:10.4_0": "natthi dāni punabbhavo”ti.",
  "thag10.2:10.5_0": "… Ekavihāriyo thero …."
}