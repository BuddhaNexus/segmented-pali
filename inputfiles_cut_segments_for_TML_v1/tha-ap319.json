{
  "tha-ap319:0.1_0": "Therāpadāna",
  "tha-ap319:0.2_0": "Ārakkhadāyakavagga",
  "tha-ap319:0.3_0": "7. Saddasaññakattheraapadāna",
  "tha-ap319:1.1_0": "“Sudassano mahāvīro,",
  "tha-ap319:1.2_0": "deseti amataṁ padaṁ;",
  "tha-ap319:1.3_0": "Parivuto sāvakehi,",
  "tha-ap319:1.4_0": "vasati gharamuttame.",
  "tha-ap319:2.1_0": "Tāya vācāya madhurāya,",
  "tha-ap319:2.2_0": "saṅgaṇhāti mahājanaṁ;",
  "tha-ap319:2.3_0": "Ghoso ca vipulo āsi,",
  "tha-ap319:2.4_0": "āsīso devamānuse.",
  "tha-ap319:3.1_0": "Nigghosasaddaṁ sutvāna,",
  "tha-ap319:3.2_0": "siddhatthassa mahesino;",
  "tha-ap319:3.3_0": "Sadde cittaṁ pasādetvā,",
  "tha-ap319:3.4_0": "avandiṁ lokanāyakaṁ.",
  "tha-ap319:4.1_0": "Catunnavutito kappe,",
  "tha-ap319:4.2_0": "yaṁ saññamalabhiṁ tadā;",
  "tha-ap319:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap319:4.4_0": "buddhasaññāyidaṁ phalaṁ.",
  "tha-ap319:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap319:5.2_0": "…pe…",
  "tha-ap319:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap319:6.1_0": "Itthaṁ sudaṁ āyasmā saddasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap319:7.1_0": "Saddasaññakattherassāpadānaṁ sattamaṁ."
}