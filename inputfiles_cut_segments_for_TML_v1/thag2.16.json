{
  "thag2.16:0.1_0": "Theragāthā",
  "thag2.16:0.2_0": "Dukanipāta",
  "thag2.16:0.3_0": "Dutiyavagga",
  "thag2.16:0.4_0": "2.16. Mahākāḷattheragāthā",
  "thag2.16:1.1_0": "“Kāḷī itthī brahatī dhaṅkarūpā,",
  "thag2.16:1.2_0": "Satthiñca bhetvā aparañca satthiṁ;",
  "thag2.16:1.3_0": "Bāhañca bhetvā aparañca bāhaṁ,",
  "thag2.16:1.4_0": "Sīsañca bhetvā dadhithālakaṁva;",
  "thag2.16:1.5_0": "Esā nisinnā abhisandahitvā.",
  "thag2.16:2.1_0": "Yo ve avidvā upadhiṁ karoti,",
  "thag2.16:2.2_0": "Punappunaṁ dukkhamupeti mando;",
  "thag2.16:2.3_0": "Tasmā pajānaṁ upadhiṁ na kayirā,",
  "thag2.16:2.4_0": "Māhaṁ puna bhinnasiro sayissan”ti.",
  "thag2.16:2.5_0": "… Mahākāḷo thero …."
}