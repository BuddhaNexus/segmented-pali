{
  "tha-ap496:0.1_0": "Therāpadāna",
  "tha-ap496:0.2_0": "Kiṅkaṇipupphavagga",
  "tha-ap496:0.3_0": "4. Kiṁsukapupphiyattheraapadāna",
  "tha-ap496:1.1_0": "“Kiṁsukaṁ pupphitaṁ disvā,",
  "tha-ap496:1.2_0": "paggahetvāna añjaliṁ;",
  "tha-ap496:1.3_0": "Buddhaseṭṭhaṁ saritvāna,",
  "tha-ap496:1.4_0": "ākāse abhipūjayiṁ.",
  "tha-ap496:2.1_0": "Tena kammena sukatena,",
  "tha-ap496:2.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap496:2.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap496:2.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap496:3.1_0": "Ekatiṁse ito kappe,",
  "tha-ap496:3.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap496:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap496:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap496:4.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap496:4.2_0": "…pe…",
  "tha-ap496:4.3_0": "viharāmi anāsavo.",
  "tha-ap496:5.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap496:5.2_0": "…pe…",
  "tha-ap496:5.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap496:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap496:6.2_0": "…pe…",
  "tha-ap496:6.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap496:7.1_0": "Itthaṁ sudaṁ āyasmā kiṁsukapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap496:8.1_0": "Kiṁsukapupphiyattherassāpadānaṁ catutthaṁ."
}