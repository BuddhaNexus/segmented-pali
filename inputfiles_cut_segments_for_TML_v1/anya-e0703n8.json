{
  "anya-e0703n8:0_0": "Navama pariccheda",
  "anya-e0703n8:1_0": "Abhayābhiseko",
  "anya-e0703n8:2_0": "1.",
  "anya-e0703n8:3_0": "Mahesī janayī putte, dasa ekañca dhītaraṁ;",
  "anya-e0703n8:4_0": "Sabbajeṭṭho’bhayo nāma, cittānāma kaniṭṭhikā.",
  "anya-e0703n8:5_0": "2.",
  "anya-e0703n8:6_0": "Passitvā taṁ viyākaṁsu, brāhmaṇā mantapāragā;",
  "anya-e0703n8:7_0": "‘‘Rajjahetu suto assā, ghātayissati mātule’’.",
  "anya-e0703n8:8_0": "3.",
  "anya-e0703n8:9_0": "Ghātessāmi kaniṭṭhinti, nicchite bhātarā’bhayo;",
  "anya-e0703n8:10_0": "Vāresi kāle vāsesuṁ, gehaṁ taṁ ekathuṇike.",
  "anya-e0703n8:11_0": "4.",
  "anya-e0703n8:12_0": "Rañño ca sirigabbhena, tassa dvāramakārayuṁ;",
  "anya-e0703n8:13_0": "Anto ṭhapesuṁ ekañca, dāsiṁ narasataṁ bahi.",
  "anya-e0703n8:14_0": "5.",
  "anya-e0703n8:15_0": "Rūpenu’mmādayī nare, diṭṭhamattāva sāyato;",
  "anya-e0703n8:16_0": "Tato ummādacittā’ti, nāmaṁ sopapadaṁ labhi.",
  "anya-e0703n8:17_0": "6.",
  "anya-e0703n8:18_0": "Sutvāna laṁkāgamanaṁ, bhaddakaccānadeviyā;",
  "anya-e0703n8:19_0": "Mātarā coditā puttā, ṭhapetve’kañca āgamuṁ.",
  "anya-e0703n8:20_0": "7.",
  "anya-e0703n8:21_0": "Disvāna te paṇḍuvāsu-devaṁ laṅkindamāgatā;",
  "anya-e0703n8:22_0": "Disvāna taṁ kaniṭṭhiñca, roditvā saha tāya ca.",
  "anya-e0703n8:23_0": "8.",
  "anya-e0703n8:24_0": "Raññā sukatasakkārā, rañño’nuññāya cārikaṁ;",
  "anya-e0703n8:25_0": "Cariṁsu laṁkādīpamhi, nivasuñca yathāruciṁ.",
  "anya-e0703n8:26_0": "9.",
  "anya-e0703n8:27_0": "Rāmena vusitaṭhānaṁ, rāmagoṇanti vuccati;",
  "anya-e0703n8:28_0": "Uruvelā’nurādhānaṁ, nivāsā ca tathā tathā.",
  "anya-e0703n8:29_0": "10.",
  "anya-e0703n8:30_0": "Tathā vijitadīghāyu-rohaṇānaṁ nivāsakā;",
  "anya-e0703n8:31_0": "Vijitagāmo dīghāyu-rohaṇanti ca vuccati.",
  "anya-e0703n8:32_0": "11.",
  "anya-e0703n8:33_0": "Kāresi anurādho so, vāpiṁ dakkhiṇato tato;",
  "anya-e0703n8:34_0": "Kārāpetvā rājagehaṁ, tattha vāsamakappayī.",
  "anya-e0703n8:35_0": "12.",
  "anya-e0703n8:36_0": "Mahārājā paṇḍuvāsu-devo jaṭṭhasutaṁ sakaṁ;",
  "anya-e0703n8:37_0": "Abhayaṁ uparajjamhi, kāle samabhisecayi.",
  "anya-e0703n8:38_0": "13.",
  "anya-e0703n8:39_0": "Dīghāyussa kumārassa, tanayo dīghagāmaṇi;",
  "anya-e0703n8:40_0": "Sutvā ummādacittaṁ taṁ, tassaṁ jātakutūhalo.",
  "anya-e0703n8:41_0": "14.",
  "anya-e0703n8:42_0": "Gahetvā’patissa gāmaṁ, taṁ apassi manujādhipaṁ;",
  "anya-e0703n8:43_0": "Adā sahoparājena, rājupaṭṭhānamassaso.",
  "anya-e0703n8:44_0": "15.",
  "anya-e0703n8:45_0": "Gavakkhābhimukhaṭṭhāne, taṁ upecca ṭhitaṁ tusā;",
  "anya-e0703n8:46_0": "Disvāna gāmiṇiṁ cittā, rattacittā’ha dāsikaṁ.",
  "anya-e0703n8:47_0": "16.",
  "anya-e0703n8:48_0": "‘‘Ko eso’’ti tato sutvā,",
  "anya-e0703n8:49_0": "Mātulassa sutoiti;",
  "anya-e0703n8:50_0": "Dāsiṁ tattha niyojesi,",
  "anya-e0703n8:51_0": "Saddhiṁkatvāna so tato.",
  "anya-e0703n8:52_0": "17.",
  "anya-e0703n8:53_0": "Gavakkhamhi ḍasāpetvā, rattiṁ kakkaṭayantakaṁ;",
  "anya-e0703n8:54_0": "Āruyha chindayitvāna, kavāṭaṁ tena pāvisi.",
  "anya-e0703n8:55_0": "18.",
  "anya-e0703n8:56_0": "Tāya saddhiṁ vasitvāna, paccūseyeva nikkhami;",
  "anya-e0703n8:57_0": "Evaṁ niccaṁ vasī tattha, chiddābhāvā apākaṭo.",
  "anya-e0703n8:58_0": "19.",
  "anya-e0703n8:59_0": "Sā tena aggahī gabbhaṁ, gabbhe pariṇate tato;",
  "anya-e0703n8:60_0": "Mātu ārocayī dāsī, mātā pucchiya dhītaraṁ.",
  "anya-e0703n8:61_0": "20.",
  "anya-e0703n8:62_0": "Rañño ārocayī rājā, amantetvā sute’brahmā;",
  "anya-e0703n8:63_0": "Posiyoso’pi amhehi, deva tasseva taṁ iti.",
  "anya-e0703n8:64_0": "21.",
  "anya-e0703n8:65_0": "Putto ce mārayissāma, ta’nti tassa adaṁsu taṁ;",
  "anya-e0703n8:66_0": "Sā sūtikālasampatte, sūti gehañca pāvisiṁ.",
  "anya-e0703n8:67_0": "22.",
  "anya-e0703n8:68_0": "Saṅkitvā gopakaṁ cittaṁ, kālavelañca dāsakaṁ;",
  "anya-e0703n8:69_0": "Tasmiṁ kamme nissāyā’ti, gāmaṇi paricārake.",
  "anya-e0703n8:70_0": "23.",
  "anya-e0703n8:71_0": "Te paṭiññaṁ adente te, rājaputtā aghātayuṁ;",
  "anya-e0703n8:72_0": "Yakkhā hutvāna rakkhiṁsu, ubho gabbhe kumārakaṁ.",
  "anya-e0703n8:73_0": "24.",
  "anya-e0703n8:74_0": "Aññaṁ upavijaññaṁ sā, sallakkhā pesi dāsiyā;",
  "anya-e0703n8:75_0": "Cittā sā janayī puttaṁ, sā itthi pana dhītaraṁ.",
  "anya-e0703n8:76_0": "25.",
  "anya-e0703n8:77_0": "Cittaṁ sahassaṁ dāpetvā, tassā puttaṁ sakampi ca;",
  "anya-e0703n8:78_0": "Āṇāpetvā dhītaraṁ taṁ, nipajjāpesi santike.",
  "anya-e0703n8:79_0": "26.",
  "anya-e0703n8:80_0": "Dhītā laddhā’ti sutvāna, tuṭṭhā rājasutā ahuṁ;",
  "anya-e0703n8:81_0": "Mātā ca mātumātā ca, ubho pana kumārakaṁ.",
  "anya-e0703n8:82_0": "27.",
  "anya-e0703n8:83_0": "Mātāmahassa nāmañca, jeṭṭhassa mātulassa ca;",
  "anya-e0703n8:84_0": "Ekaṁ katvā tamakaruṁ, paṇḍukābhayanāmakaṁ.",
  "anya-e0703n8:85_0": "28.",
  "anya-e0703n8:86_0": "Laṁkā pālo paṇḍuvāsu-devo rajjamakārayi;",
  "anya-e0703n8:87_0": "Tiṁsa vassamhi jātamhi, mato so paṇḍukābhaye.",
  "anya-e0703n8:88_0": "29.",
  "anya-e0703n8:89_0": "Tasmiṁ matasmiṁ manujādhipasmiṁ,",
  "anya-e0703n8:90_0": "Sabbe samāgamma narindaputtā;",
  "anya-e0703n8:91_0": "Tassābhayassābhayadassa bhātu,",
  "anya-e0703n8:92_0": "Rājābhisekaṁ akaruṁ uḷārāti.",
  "anya-e0703n8:93_0": "Sujanappasāda saṁvegatthāya kate mahāvaṁse",
  "anya-e0703n8:94_0": "Abhayābhiseko nāma",
  "anya-e0703n8:95_0": "Navamo paricchedo."
}