{
  "tha-ap60:0.1_0": "Therāpadāna",
  "tha-ap60:0.2_0": "Bījanivagga",
  "tha-ap60:0.3_0": "8. Dhajadāyakattheraapadāna",
  "tha-ap60:1.1_0": "“Padumuttarabuddhassa,",
  "tha-ap60:1.2_0": "bodhiyā pādaputtame;",
  "tha-ap60:1.3_0": "Haṭṭho haṭṭhena cittena,",
  "tha-ap60:1.4_0": "dhajamāropayiṁ ahaṁ.",
  "tha-ap60:2.1_0": "Patitapattāni gaṇhitvā,",
  "tha-ap60:2.2_0": "bahiddhā chaḍḍayiṁ ahaṁ;",
  "tha-ap60:2.3_0": "Antosuddhaṁ bahisuddhaṁ,",
  "tha-ap60:2.4_0": "adhimuttamanāsavaṁ.",
  "tha-ap60:3.1_0": "Sammukhā viya sambuddhaṁ,",
  "tha-ap60:3.2_0": "avandiṁ bodhimuttamaṁ;",
  "tha-ap60:3.3_0": "Padumuttaro lokavidū,",
  "tha-ap60:3.4_0": "āhutīnaṁ paṭiggaho.",
  "tha-ap60:4.1_0": "Bhikkhusaṅghe ṭhito satthā,",
  "tha-ap60:4.2_0": "imā gāthā abhāsatha;",
  "tha-ap60:4.3_0": "‘Iminā dhajadānena,",
  "tha-ap60:4.4_0": "upaṭṭhānena cūbhayaṁ.",
  "tha-ap60:5.1_0": "Kappānaṁ satasahassaṁ,",
  "tha-ap60:5.2_0": "duggatiṁ so na gacchati;",
  "tha-ap60:5.3_0": "Devesu devasobhagyaṁ,",
  "tha-ap60:5.4_0": "anubhossatinappakaṁ.",
  "tha-ap60:6.1_0": "Anekasatakkhattuñca,",
  "tha-ap60:6.2_0": "rājā raṭṭhe bhavissati;",
  "tha-ap60:6.3_0": "Uggato nāma nāmena,",
  "tha-ap60:6.4_0": "cakkavattī bhavissati.",
  "tha-ap60:7.1_0": "Sampattiṁ anubhotvāna,",
  "tha-ap60:7.2_0": "sukkamūlena codito;",
  "tha-ap60:7.3_0": "Gotamassa bhagavato,",
  "tha-ap60:7.4_0": "sāsanebhiramissati’.",
  "tha-ap60:8.1_0": "Padhānapahitattomhi,",
  "tha-ap60:8.2_0": "upasanto nirūpadhi;",
  "tha-ap60:8.3_0": "Dhāremi antimaṁ dehaṁ,",
  "tha-ap60:8.4_0": "sammāsambuddhasāsane.",
  "tha-ap60:9.1_0": "Ekapaññāsasahasse,",
  "tha-ap60:9.2_0": "kappe uggatasavhayo;",
  "tha-ap60:9.3_0": "Paññāsasatasahasse,",
  "tha-ap60:9.4_0": "khattiyo meghasavhayo.",
  "tha-ap60:10.1_0": "Paṭisambhidā catasso,",
  "tha-ap60:10.2_0": "…pe…",
  "tha-ap60:10.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap60:11.1_0": "Itthaṁ sudaṁ āyasmā dhajadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap60:12.1_0": "Dhajadāyakattherassāpadānaṁ aṭṭhamaṁ."
}