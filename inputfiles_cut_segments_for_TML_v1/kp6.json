{
  "kp6:0.1_0": "Khuddakapāṭha",
  "kp6:0.2_0": "6. Ratanasutta",
  "kp6:1.1_0": "Yānīdha bhūtāni samāgatāni,",
  "kp6:1.2_0": "Bhummāni vā yāni va antalikkhe;",
  "kp6:1.3_0": "Sabbeva bhūtā sumanā bhavantu,",
  "kp6:1.4_0": "Athopi sakkacca suṇantu bhāsitaṁ.",
  "kp6:2.1_0": "Tasmā hi bhūtā nisāmetha sabbe,",
  "kp6:2.2_0": "Mettaṁ karotha mānusiyā pajāya;",
  "kp6:2.3_0": "Divā ca ratto ca haranti ye baliṁ,",
  "kp6:2.4_0": "Tasmā hi ne rakkhatha appamattā.",
  "kp6:3.1_0": "Yaṁ kiñci vittaṁ idha vā huraṁ vā,",
  "kp6:3.2_0": "Saggesu vā yaṁ ratanaṁ paṇītaṁ;",
  "kp6:3.3_0": "Na no samaṁ atthi tathāgatena,",
  "kp6:3.4_0": "Idampi buddhe ratanaṁ paṇītaṁ;",
  "kp6:3.5_0": "Etena saccena suvatthi hotu.",
  "kp6:4.1_0": "Khayaṁ virāgaṁ amataṁ paṇītaṁ,",
  "kp6:4.2_0": "Yadajjhagā sakyamunī samāhito;",
  "kp6:4.3_0": "Na tena dhammena samatthi kiñci,",
  "kp6:4.4_0": "Idampi dhamme ratanaṁ paṇītaṁ;",
  "kp6:4.5_0": "Etena saccena suvatthi hotu.",
  "kp6:5.1_0": "Yaṁ buddhaseṭṭho parivaṇṇayī suciṁ,",
  "kp6:5.2_0": "Samādhimānantarikaññamāhu;",
  "kp6:5.3_0": "Samādhinā tena samo na vijjati,",
  "kp6:5.4_0": "Idampi dhamme ratanaṁ paṇītaṁ;",
  "kp6:5.5_0": "Etena saccena suvatthi hotu.",
  "kp6:6.1_0": "Ye puggalā aṭṭha sataṁ pasatthā,",
  "kp6:6.2_0": "Cattāri etāni yugāni honti;",
  "kp6:6.3_0": "Te dakkhiṇeyyā sugatassa sāvakā,",
  "kp6:6.4_0": "Etesu dinnāni mahapphalāni;",
  "kp6:6.5_0": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "kp6:6.6_0": "Etena saccena suvatthi hotu.",
  "kp6:7.1_0": "Ye suppayuttā manasā daḷhena,",
  "kp6:7.2_0": "Nikkāmino gotamasāsanamhi;",
  "kp6:7.3_0": "Te pattipattā amataṁ vigayha,",
  "kp6:7.4_0": "Laddhā mudhā nibbutiṁ bhuñjamānā;",
  "kp6:7.5_0": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "kp6:7.6_0": "Etena saccena suvatthi hotu.",
  "kp6:8.1_0": "Yathindakhīlo pathavissito siyā,",
  "kp6:8.2_0": "Catubbhi vātehi asampakampiyo;",
  "kp6:8.3_0": "Tathūpamaṁ sappurisaṁ vadāmi,",
  "kp6:8.4_0": "Yo ariyasaccāni avecca passati;",
  "kp6:8.5_0": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "kp6:8.6_0": "Etena saccena suvatthi hotu.",
  "kp6:9.1_0": "Ye ariyasaccāni vibhāvayanti,",
  "kp6:9.2_0": "Gambhīrapaññena sudesitāni;",
  "kp6:9.3_0": "Kiñcāpi te honti bhusaṁ pamattā,",
  "kp6:9.4_0": "Na te bhavaṁ aṭṭhamamādiyanti;",
  "kp6:9.5_0": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "kp6:9.6_0": "Etena saccena suvatthi hotu.",
  "kp6:10.1_0": "Sahāvassa dassanasampadāya,",
  "kp6:10.2_0": "Tayassu dhammā jahitā bhavanti;",
  "kp6:10.3_0": "Sakkāyadiṭṭhī vicikicchitañca,",
  "kp6:10.4_0": "Sīlabbataṁ vāpi yadatthi kiñci.",
  "kp6:11.1_0": "Catūhapāyehi ca vippamutto,",
  "kp6:11.2_0": "Chaccābhiṭhānāni abhabba kātuṁ;",
  "kp6:11.3_0": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "kp6:11.4_0": "Etena saccena suvatthi hotu.",
  "kp6:12.1_0": "Kiñcāpi so kamma karoti pāpakaṁ,",
  "kp6:12.2_0": "Kāyena vācā uda cetasā vā;",
  "kp6:12.3_0": "Abhabba so tassa paṭicchadāya,",
  "kp6:12.4_0": "Abhabbatā diṭṭhapadassa vuttā;",
  "kp6:12.5_0": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "kp6:12.6_0": "Etena saccena suvatthi hotu.",
  "kp6:13.1_0": "Vanappagumbe yatha phussitagge,",
  "kp6:13.2_0": "Gimhānamāse paṭhamasmiṁ gimhe;",
  "kp6:13.3_0": "Tathūpamaṁ dhammavaraṁ adesayi,",
  "kp6:13.4_0": "Nibbānagāmiṁ paramaṁ hitāya;",
  "kp6:13.5_0": "Idampi buddhe ratanaṁ paṇītaṁ,",
  "kp6:13.6_0": "Etena saccena suvatthi hotu.",
  "kp6:14.1_0": "Varo varaññū varado varāharo,",
  "kp6:14.2_0": "Anuttaro dhammavaraṁ adesayi;",
  "kp6:14.3_0": "Idampi buddhe ratanaṁ paṇītaṁ,",
  "kp6:14.4_0": "Etena saccena suvatthi hotu.",
  "kp6:15.1_0": "Khīṇaṁ purāṇaṁ nava natthi sambhavaṁ,",
  "kp6:15.2_0": "Virattacittāyatike bhavasmiṁ;",
  "kp6:15.3_0": "Te khīṇabījā avirūḷhichandā,",
  "kp6:15.4_0": "Nibbanti dhīrā yathāyaṁ padīpo;",
  "kp6:15.5_0": "Idampi saṅghe ratanaṁ paṇītaṁ,",
  "kp6:15.6_0": "Etena saccena suvatthi hotu.",
  "kp6:16.1_0": "Yānīdha bhūtāni samāgatāni,",
  "kp6:16.2_0": "Bhummāni vā yāni va antalikkhe;",
  "kp6:16.3_0": "Tathāgataṁ devamanussapūjitaṁ,",
  "kp6:16.4_0": "Buddhaṁ namassāma suvatthi hotu.",
  "kp6:17.1_0": "Yānīdha bhūtāni samāgatāni,",
  "kp6:17.2_0": "Bhummāni vā yāni va antalikkhe;",
  "kp6:17.3_0": "Tathāgataṁ devamanussapūjitaṁ,",
  "kp6:17.4_0": "Dhammaṁ namassāma suvatthi hotu.",
  "kp6:18.1_0": "Yānīdha bhūtāni samāgatāni,",
  "kp6:18.2_0": "Bhummāni vā yāni va antalikkhe;",
  "kp6:18.3_0": "Tathāgataṁ devamanussapūjitaṁ,",
  "kp6:18.4_0": "Saṅghaṁ namassāma suvatthi hotūti.",
  "kp6:19.1_0": "Ratanasuttaṁ."
}