{
  "tha-ap542:0.1_0": "Therāpadāna",
  "tha-ap542:0.2_0": "Kaccāyanavagga",
  "tha-ap542:0.3_0": "10. Mogharājattheraapadāna",
  "tha-ap542:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap542:1.2_0": "sabbalokavidū muni;",
  "tha-ap542:1.3_0": "Ito satasahassamhi,",
  "tha-ap542:1.4_0": "kappe uppajji cakkhumā.",
  "tha-ap542:2.1_0": "Ovādako viññāpako,",
  "tha-ap542:2.2_0": "tārako sabbapāṇinaṁ;",
  "tha-ap542:2.3_0": "Desanākusalo buddho,",
  "tha-ap542:2.4_0": "tāresi janataṁ bahuṁ.",
  "tha-ap542:3.1_0": "Anukampako kāruṇiko,",
  "tha-ap542:3.2_0": "hitesī sabbapāṇinaṁ;",
  "tha-ap542:3.3_0": "Sampatte titthiye sabbe,",
  "tha-ap542:3.4_0": "pañcasīle patiṭṭhapi.",
  "tha-ap542:4.1_0": "Evaṁ nirākulaṁ āsi,",
  "tha-ap542:4.2_0": "suññataṁ titthiyehi ca;",
  "tha-ap542:4.3_0": "Vicittaṁ arahantehi,",
  "tha-ap542:4.4_0": "vasībhūtehi tādibhi.",
  "tha-ap542:5.1_0": "Ratanānaṭṭhapaññāsaṁ,",
  "tha-ap542:5.2_0": "uggato so mahāmuni;",
  "tha-ap542:5.3_0": "Kañcanagghiyasaṅkāso,",
  "tha-ap542:5.4_0": "bāttiṁsavaralakkhaṇo.",
  "tha-ap542:6.1_0": "Vassasatasahassāni,",
  "tha-ap542:6.2_0": "āyu vijjati tāvade;",
  "tha-ap542:6.3_0": "Tāvatā tiṭṭhamāno so,",
  "tha-ap542:6.4_0": "tāresi janataṁ bahuṁ.",
  "tha-ap542:7.1_0": "Tadāhaṁ haṁsavatiyaṁ,",
  "tha-ap542:7.2_0": "kule aññatare ahuṁ;",
  "tha-ap542:7.3_0": "Parakammāyane yutto,",
  "tha-ap542:7.4_0": "natthi me kiñci sandhanaṁ.",
  "tha-ap542:8.1_0": "Paṭikkamanasālāyaṁ,",
  "tha-ap542:8.2_0": "vasanto katabhūmiyaṁ;",
  "tha-ap542:8.3_0": "Aggiṁ ujjālayiṁ tattha,",
  "tha-ap542:8.4_0": "daḷhaṁ kaṇhāsi sā mahī.",
  "tha-ap542:9.1_0": "Tadā parisatiṁ nātho,",
  "tha-ap542:9.2_0": "catusaccapakāsako;",
  "tha-ap542:9.3_0": "Sāvakaṁ sampakittesi,",
  "tha-ap542:9.4_0": "lūkhacīvaradhārakaṁ.",
  "tha-ap542:10.1_0": "Tassa tamhi guṇe tuṭṭho,",
  "tha-ap542:10.2_0": "paṇipacca tathāgataṁ;",
  "tha-ap542:10.3_0": "Lūkhacīvaradhāraggaṁ,",
  "tha-ap542:10.4_0": "patthayiṁ ṭhānamuttamaṁ.",
  "tha-ap542:11.1_0": "Tadā avoca bhagavā,",
  "tha-ap542:11.2_0": "sāvake padumuttaro;",
  "tha-ap542:11.3_0": "‘Passathetaṁ purisakaṁ,",
  "tha-ap542:11.4_0": "kucelaṁ tanudehakaṁ.",
  "tha-ap542:12.1_0": "Pītippasannavadanaṁ,",
  "tha-ap542:12.2_0": "saddhādhanasamanvitaṁ;",
  "tha-ap542:12.3_0": "Udaggatanujaṁ haṭṭhaṁ,",
  "tha-ap542:12.4_0": "acalaṁ sālapiṇḍitaṁ.",
  "tha-ap542:13.1_0": "Eso pattheti taṁ ṭhānaṁ,",
  "tha-ap542:13.2_0": "saccasenassa bhikkhuno;",
  "tha-ap542:13.3_0": "Lūkhacīvaradhārissa,",
  "tha-ap542:13.4_0": "tassa vaṇṇasitāsayo’.",
  "tha-ap542:14.1_0": "Taṁ sutvā mudito hutvā,",
  "tha-ap542:14.2_0": "nipacca sirasā jinaṁ;",
  "tha-ap542:14.3_0": "Yāvajīvaṁ subhaṁ kammaṁ,",
  "tha-ap542:14.4_0": "karitvā jinasāsane.",
  "tha-ap542:15.1_0": "Tena kammena sukatena,",
  "tha-ap542:15.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap542:15.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap542:15.4_0": "tāvatiṁsūpago ahaṁ.",
  "tha-ap542:16.1_0": "Paṭikkamanasālāyaṁ,",
  "tha-ap542:16.2_0": "bhūmidāhakakammunā;",
  "tha-ap542:16.3_0": "Samasahassaṁ niraye,",
  "tha-ap542:16.4_0": "adayhiṁ vedanāṭṭito.",
  "tha-ap542:17.1_0": "Tena kammāvasesena,",
  "tha-ap542:17.2_0": "pañca jātisatānihaṁ;",
  "tha-ap542:17.3_0": "Manusso kulajo hutvā,",
  "tha-ap542:17.4_0": "jātiyā lakkhaṇaṅkito.",
  "tha-ap542:18.1_0": "Pañca jātisatāneva,",
  "tha-ap542:18.2_0": "kuṭṭharogasamappito;",
  "tha-ap542:18.3_0": "Mahādukkhaṁ anubhaviṁ,",
  "tha-ap542:18.4_0": "tassa kammassa vāhasā.",
  "tha-ap542:19.1_0": "Imasmiṁ bhaddake kappe,",
  "tha-ap542:19.2_0": "upariṭṭhaṁ yasassinaṁ;",
  "tha-ap542:19.3_0": "Piṇḍapātena tappesiṁ,",
  "tha-ap542:19.4_0": "pasannamānaso ahaṁ.",
  "tha-ap542:20.1_0": "Tena kammavisesena,",
  "tha-ap542:20.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap542:20.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap542:20.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap542:21.1_0": "Pacchime bhave sampatte,",
  "tha-ap542:21.2_0": "ajāyiṁ khattiye kule;",
  "tha-ap542:21.3_0": "Pituno accayenāhaṁ,",
  "tha-ap542:21.4_0": "mahārajjasamappito.",
  "tha-ap542:22.1_0": "Kuṭṭharogādhibhūtohaṁ,",
  "tha-ap542:22.2_0": "na ratiṁ na sukhaṁ labhe;",
  "tha-ap542:22.3_0": "Moghaṁ rajjaṁ sukhaṁ yasmā,",
  "tha-ap542:22.4_0": "mogharājā tato ahaṁ.",
  "tha-ap542:23.1_0": "Kāyassa dosaṁ disvāna,",
  "tha-ap542:23.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap542:23.3_0": "Bāvarissa dijaggassa,",
  "tha-ap542:23.4_0": "sissattaṁ ajjhupāgamiṁ.",
  "tha-ap542:24.1_0": "Mahatā parivārena,",
  "tha-ap542:24.2_0": "upecca naranāyakaṁ;",
  "tha-ap542:24.3_0": "Apucchiṁ nipuṇaṁ pañhaṁ,",
  "tha-ap542:24.4_0": "taṁ vīraṁ vādisūdanaṁ.",
  "tha-ap542:25.1_0": "‘Ayaṁ loko paro loko,",
  "tha-ap542:25.2_0": "brahmaloko sadevako;",
  "tha-ap542:25.3_0": "Diṭṭhiṁ no nābhijānāmi,",
  "tha-ap542:25.4_0": "gotamassa yasassino.",
  "tha-ap542:26.1_0": "Evābhikkantadassāviṁ,",
  "tha-ap542:26.2_0": "atthi pañhena āgamaṁ;",
  "tha-ap542:26.3_0": "Kathaṁ lokaṁ avekkhantaṁ,",
  "tha-ap542:26.4_0": "maccurājā na passati’.",
  "tha-ap542:27.1_0": "‘Suññato lokaṁ avekkhassu,",
  "tha-ap542:27.2_0": "mogharāja sadā sato;",
  "tha-ap542:27.3_0": "Attānudiṭṭhiṁ uhacca,",
  "tha-ap542:27.4_0": "evaṁ maccutaro siyā.",
  "tha-ap542:28.1_0": "Evaṁ lokaṁ avekkhantaṁ,",
  "tha-ap542:28.2_0": "maccurājā na passati’;",
  "tha-ap542:28.3_0": "Iti maṁ abhaṇi buddho,",
  "tha-ap542:28.4_0": "sabbarogatikicchako.",
  "tha-ap542:29.1_0": "Saha gāthāvasānena,",
  "tha-ap542:29.2_0": "kesamassuvivajjito;",
  "tha-ap542:29.3_0": "Kāsāvavatthavasano,",
  "tha-ap542:29.4_0": "āsiṁ bhikkhu tathārahā.",
  "tha-ap542:30.1_0": "Saṅghikesu vihāresu,",
  "tha-ap542:30.2_0": "na vasiṁ rogapīḷito;",
  "tha-ap542:30.3_0": "Mā vihāro padussīti,",
  "tha-ap542:30.4_0": "vātarogehi pīḷito.",
  "tha-ap542:31.1_0": "Saṅkārakūṭā āhitvā,",
  "tha-ap542:31.2_0": "susānā rathikāhi ca;",
  "tha-ap542:31.3_0": "Tato saṅghāṭiṁ karitvā,",
  "tha-ap542:31.4_0": "dhārayiṁ lūkhacīvaraṁ.",
  "tha-ap542:32.1_0": "Mahābhisakko tasmiṁ me,",
  "tha-ap542:32.2_0": "guṇe tuṭṭho vināyako;",
  "tha-ap542:32.3_0": "Lūkhacīvaradhārīnaṁ,",
  "tha-ap542:32.4_0": "etadagge ṭhapesi maṁ.",
  "tha-ap542:33.1_0": "Puññapāpaparikkhīṇo,",
  "tha-ap542:33.2_0": "sabbarogavivajjito;",
  "tha-ap542:33.3_0": "Sikhīva anupādāno,",
  "tha-ap542:33.4_0": "nibbāyissamanāsavo.",
  "tha-ap542:34.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap542:34.2_0": "…pe…",
  "tha-ap542:34.3_0": "viharāmi anāsavo.",
  "tha-ap542:35.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap542:35.2_0": "…pe…",
  "tha-ap542:35.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap542:36.1_0": "Paṭisambhidā catasso,",
  "tha-ap542:36.2_0": "…pe…",
  "tha-ap542:36.3_0": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap542:37.1_0": "Itthaṁ sudaṁ āyasmā mogharājā thero imā gāthāyo abhāsitthāti.",
  "tha-ap542:38.1_0": "Mogharājattherassāpadānaṁ dasamaṁ.",
  "tha-ap542:39.1_0": "Kaccāyanavaggo catupaññāsamo.",
  "tha-ap542:40.1_0": "Tassuddānaṁ",
  "tha-ap542:41.1_0": "Kaccāno vakkalī thero,",
  "tha-ap542:41.2_0": "mahākappinasavhayo;",
  "tha-ap542:41.3_0": "Dabbo kumāranāmo ca,",
  "tha-ap542:41.4_0": "bāhiyo koṭṭhiko vasī.",
  "tha-ap542:42.1_0": "Uruveḷakassapo rādho,",
  "tha-ap542:42.2_0": "mogharājā ca paṇḍito;",
  "tha-ap542:42.3_0": "Tīṇi gāthāsatānettha,",
  "tha-ap542:42.4_0": "bāsaṭṭhi ceva piṇḍitā."
}