{
  "thag16.8:0.1_0": "Theragāthā",
  "thag16.8:0.2_0": "Vīsatinipāta",
  "thag16.8:0.3_0": "Paṭhamavagga",
  "thag16.8:0.4_0": "16.8. Aṅgulimālattheragāthā",
  "thag16.8:1.1_0": "“Gacchaṁ vadesi samaṇaṭṭhitomhi,",
  "thag16.8:1.2_0": "Mamañca brūsi ṭhitamaṭṭhitoti;",
  "thag16.8:1.3_0": "Pucchāmi taṁ samaṇa etamatthaṁ,",
  "thag16.8:1.4_0": "‘Kathaṁ ṭhito tvaṁ ahamaṭṭhitomhi’”.",
  "thag16.8:2.1_0": "“Ṭhito ahaṁ aṅgulimāla sabbadā,",
  "thag16.8:2.2_0": "Sabbesu bhūtesu nidhāya daṇḍaṁ;",
  "thag16.8:2.3_0": "Tuvañca pāṇesu asaññatosi,",
  "thag16.8:2.4_0": "Tasmā ṭhitohaṁ tuvamaṭṭhitosi”.",
  "thag16.8:3.1_0": "“Cirassaṁ vata me mahito mahesī,",
  "thag16.8:3.2_0": "Mahāvanaṁ samaṇo paccapādi;",
  "thag16.8:3.3_0": "Sohaṁ cajissāmi sahassapāpaṁ,",
  "thag16.8:3.4_0": "Sutvāna gāthaṁ tava dhammayuttaṁ”.",
  "thag16.8:4.1_0": "Icceva coro asimāvudhañca,",
  "thag16.8:4.2_0": "Sobbhe papāte narake anvakāsi;",
  "thag16.8:4.3_0": "Avandi coro sugatassa pāde,",
  "thag16.8:4.4_0": "Tattheva pabbajjamayāci buddhaṁ.",
  "thag16.8:5.1_0": "Buddho ca kho kāruṇiko mahesi,",
  "thag16.8:5.2_0": "Yo satthā lokassa sadevakassa;",
  "thag16.8:5.3_0": "“Tamehi bhikkhū”ti tadā avoca,",
  "thag16.8:5.4_0": "Eseva tassa ahu bhikkhubhāvo.",
  "thag16.8:6.1_0": "“Yo ca pubbe pamajjitvā,",
  "thag16.8:6.2_0": "pacchā so nappamajjati;",
  "thag16.8:6.3_0": "Somaṁ lokaṁ pabhāseti,",
  "thag16.8:6.4_0": "abbhā muttova candimā.",
  "thag16.8:7.1_0": "Yassa pāpaṁ kataṁ kammaṁ,",
  "thag16.8:7.2_0": "kusalena pidhīyati;",
  "thag16.8:7.3_0": "Somaṁ lokaṁ pabhāseti,",
  "thag16.8:7.4_0": "abbhā muttova candimā.",
  "thag16.8:8.1_0": "Yo have daharo bhikkhu,",
  "thag16.8:8.2_0": "yuñjati buddhasāsane;",
  "thag16.8:8.3_0": "Somaṁ lokaṁ pabhāseti,",
  "thag16.8:8.4_0": "abbhā muttova candimā.",
  "thag16.8:9.1_0": "Disāpi me dhammakathaṁ suṇantu,",
  "thag16.8:9.2_0": "Disāpi me yuñjantu buddhasāsane;",
  "thag16.8:9.3_0": "Disāpi me te manuje bhajantu,",
  "thag16.8:9.4_0": "Ye dhammamevādapayanti santo.",
  "thag16.8:10.1_0": "Disā hi me khantivādānaṁ,",
  "thag16.8:10.2_0": "avirodhappasaṁsinaṁ;",
  "thag16.8:10.3_0": "Suṇantu dhammaṁ kālena,",
  "thag16.8:10.4_0": "tañca anuvidhīyantu.",
  "thag16.8:11.1_0": "Na hi jātu so mamaṁ hiṁse,",
  "thag16.8:11.2_0": "aññaṁ vā pana kiñcanaṁ;",
  "thag16.8:11.3_0": "Pappuyya paramaṁ santiṁ,",
  "thag16.8:11.4_0": "rakkheyya tasathāvare.",
  "thag16.8:12.1_0": "Udakañhi nayanti nettikā,",
  "thag16.8:12.2_0": "Usukārā namayanti tejanaṁ;",
  "thag16.8:12.3_0": "Dāruṁ namayanti tacchakā,",
  "thag16.8:12.4_0": "Attānaṁ damayanti paṇḍitā.",
  "thag16.8:13.1_0": "Daṇḍeneke damayanti,",
  "thag16.8:13.2_0": "aṅkusebhi kasāhi ca;",
  "thag16.8:13.3_0": "Adaṇḍena asatthena,",
  "thag16.8:13.4_0": "ahaṁ dantomhi tādinā.",
  "thag16.8:14.1_0": "‘Ahiṁsako’ti me nāmaṁ,",
  "thag16.8:14.2_0": "hiṁsakassa pure sato;",
  "thag16.8:14.3_0": "Ajjāhaṁ saccanāmomhi,",
  "thag16.8:14.4_0": "na naṁ hiṁsāmi kiñcanaṁ.",
  "thag16.8:15.1_0": "Coro ahaṁ pure āsiṁ,",
  "thag16.8:15.2_0": "aṅgulimāloti vissuto;",
  "thag16.8:15.3_0": "Vuyhamāno mahoghena,",
  "thag16.8:15.4_0": "buddhaṁ saraṇamāgamaṁ.",
  "thag16.8:16.1_0": "Lohitapāṇi pure āsiṁ,",
  "thag16.8:16.2_0": "aṅgulimāloti vissuto;",
  "thag16.8:16.3_0": "Saraṇagamanaṁ passa,",
  "thag16.8:16.4_0": "bhavanetti samūhatā.",
  "thag16.8:17.1_0": "Tādisaṁ kammaṁ katvāna,",
  "thag16.8:17.2_0": "bahuṁ duggatigāminaṁ;",
  "thag16.8:17.3_0": "Phuṭṭho kammavipākena,",
  "thag16.8:17.4_0": "anaṇo bhuñjāmi bhojanaṁ.",
  "thag16.8:18.1_0": "Pamādamanuyuñjanti,",
  "thag16.8:18.2_0": "bālā dummedhino janā;",
  "thag16.8:18.3_0": "Appamādañca medhāvī,",
  "thag16.8:18.4_0": "dhanaṁ seṭṭhaṁva rakkhati.",
  "thag16.8:19.1_0": "Mā pamādamanuyuñjetha,",
  "thag16.8:19.2_0": "mā kāmaratisanthavaṁ;",
  "thag16.8:19.3_0": "Appamatto hi jhāyanto,",
  "thag16.8:19.4_0": "pappoti paramaṁ sukhaṁ.",
  "thag16.8:20.1_0": "Svāgataṁ nāpagataṁ,",
  "thag16.8:20.2_0": "netaṁ dummantitaṁ mama;",
  "thag16.8:20.3_0": "Savibhattesu dhammesu,",
  "thag16.8:20.4_0": "yaṁ seṭṭhaṁ tadupāgamaṁ.",
  "thag16.8:21.1_0": "Svāgataṁ nāpagataṁ,",
  "thag16.8:21.2_0": "netaṁ dummantitaṁ mama;",
  "thag16.8:21.3_0": "Tisso vijjā anuppattā,",
  "thag16.8:21.4_0": "kataṁ buddhassa sāsanaṁ.",
  "thag16.8:22.1_0": "Araññe rukkhamūle vā,",
  "thag16.8:22.2_0": "pabbatesu guhāsu vā;",
  "thag16.8:22.3_0": "Tattha tattheva aṭṭhāsiṁ,",
  "thag16.8:22.4_0": "ubbiggamanaso tadā.",
  "thag16.8:23.1_0": "Sukhaṁ sayāmi ṭhāyāmi,",
  "thag16.8:23.2_0": "sukhaṁ kappemi jīvitaṁ;",
  "thag16.8:23.3_0": "Ahatthapāso mārassa,",
  "thag16.8:23.4_0": "aho satthānukampito.",
  "thag16.8:24.1_0": "Brahmajacco pure āsiṁ,",
  "thag16.8:24.2_0": "udicco ubhato ahu;",
  "thag16.8:24.3_0": "Sojja putto sugatassa,",
  "thag16.8:24.4_0": "dhammarājassa satthuno.",
  "thag16.8:25.1_0": "Vītataṇho anādāno,",
  "thag16.8:25.2_0": "guttadvāro susaṁvuto;",
  "thag16.8:25.3_0": "Aghamūlaṁ vadhitvāna,",
  "thag16.8:25.4_0": "patto me āsavakkhayo.",
  "thag16.8:26.1_0": "Pariciṇṇo mayā satthā,",
  "thag16.8:26.2_0": "kataṁ buddhassa sāsanaṁ;",
  "thag16.8:26.3_0": "Ohito garuko bhāro,",
  "thag16.8:26.4_0": "bhavanetti samūhatā”ti.",
  "thag16.8:26.5_0": "… Aṅgulimālo thero …."
}