{
  "tha-ap124:0.1_0": "Therāpadāna",
  "tha-ap124:0.2_0": "Sereyyavagga",
  "tha-ap124:0.3_0": "2. Pupphathūpiyattheraapadāna",
  "tha-ap124:1.1_0": "“Himavantassāvidūre,",
  "tha-ap124:1.2_0": "kukkuro nāma pabbato;",
  "tha-ap124:1.3_0": "Vemajjhe tassa vasati,",
  "tha-ap124:1.4_0": "brāhmaṇo mantapāragū.",
  "tha-ap124:2.1_0": "Pañca sissasahassāni,",
  "tha-ap124:2.2_0": "parivārenti maṁ sadā;",
  "tha-ap124:2.3_0": "Pubbuṭṭhāyī ca te āsuṁ,",
  "tha-ap124:2.4_0": "mantesu ca visāradā.",
  "tha-ap124:3.1_0": "Buddho loke samuppanno,",
  "tha-ap124:3.2_0": "taṁ vijānātha no bhavaṁ;",
  "tha-ap124:3.3_0": "Asītibyañjanānassa,",
  "tha-ap124:3.4_0": "bāttiṁsavaralakkhaṇā.",
  "tha-ap124:4.1_0": "Byāmappabho jinavaro,",
  "tha-ap124:4.2_0": "ādiccova virocati;",
  "tha-ap124:4.3_0": "Sissānaṁ vacanaṁ sutvā,",
  "tha-ap124:4.4_0": "brāhmaṇo mantapāragū.",
  "tha-ap124:5.1_0": "Assamā abhinikkhamma,",
  "tha-ap124:5.2_0": "disaṁ pucchati sissake;",
  "tha-ap124:5.3_0": "Yamhi dese mahāvīro,",
  "tha-ap124:5.4_0": "vasati lokanāyako.",
  "tha-ap124:6.1_0": "Tāhaṁ disaṁ namassissaṁ,",
  "tha-ap124:6.2_0": "jinaṁ appaṭipuggalaṁ;",
  "tha-ap124:6.3_0": "Udaggacitto sumano,",
  "tha-ap124:6.4_0": "pūjesiṁ taṁ tathāgataṁ.",
  "tha-ap124:7.1_0": "Etha sissā gamissāma,",
  "tha-ap124:7.2_0": "dakkhissāma tathāgataṁ;",
  "tha-ap124:7.3_0": "Vanditvā satthuno pāde,",
  "tha-ap124:7.4_0": "sossāma jinasāsanaṁ.",
  "tha-ap124:8.1_0": "Ekāhaṁ abhinikkhamma,",
  "tha-ap124:8.2_0": "byādhiṁ paṭilabhiṁ ahaṁ;",
  "tha-ap124:8.3_0": "Byādhinā pīḷito santo,",
  "tha-ap124:8.4_0": "sālaṁ vāsayituṁ gamiṁ.",
  "tha-ap124:9.1_0": "Sabbe sisse samānetvā,",
  "tha-ap124:9.2_0": "apucchiṁ te tathāgataṁ;",
  "tha-ap124:9.3_0": "Kīdisaṁ lokanāthassa,",
  "tha-ap124:9.4_0": "guṇaṁ paramabuddhino.",
  "tha-ap124:10.1_0": "Te me puṭṭhā viyākaṁsu,",
  "tha-ap124:10.2_0": "Yathā dassāvino tathā;",
  "tha-ap124:10.3_0": "Sakkaccaṁ buddhaseṭṭhaṁ taṁ,",
  "tha-ap124:10.4_0": "Desesuṁ mama sammukhā.",
  "tha-ap124:11.1_0": "Tesāhaṁ vacanaṁ sutvā,",
  "tha-ap124:11.2_0": "sakaṁ cittaṁ pasādayiṁ;",
  "tha-ap124:11.3_0": "Pupphehi thūpaṁ katvāna,",
  "tha-ap124:11.4_0": "tattha kālaṅkato ahaṁ.",
  "tha-ap124:12.1_0": "Te me sarīraṁ jhāpetvā,",
  "tha-ap124:12.2_0": "agamuṁ buddhasantikaṁ;",
  "tha-ap124:12.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap124:12.4_0": "satthāramabhivādayuṁ.",
  "tha-ap124:13.1_0": "Pupphehi thūpaṁ katvāna,",
  "tha-ap124:13.2_0": "sugatassa mahesino;",
  "tha-ap124:13.3_0": "Kappānaṁ satasahassaṁ,",
  "tha-ap124:13.4_0": "duggatiṁ nupapajjahaṁ.",
  "tha-ap124:14.1_0": "Cattālīsasahassamhi,",
  "tha-ap124:14.2_0": "kappe soḷasa khattiyā;",
  "tha-ap124:14.3_0": "Nāmenaggisamā nāma,",
  "tha-ap124:14.4_0": "cakkavattī mahabbalā.",
  "tha-ap124:15.1_0": "Vīsakappasahassamhi,",
  "tha-ap124:15.2_0": "rājāno cakkavattino;",
  "tha-ap124:15.3_0": "Ghatāsanasanāmāva,",
  "tha-ap124:15.4_0": "aṭṭhattiṁsa mahīpatī.",
  "tha-ap124:16.1_0": "Paṭisambhidā catasso,",
  "tha-ap124:16.2_0": "…pe…",
  "tha-ap124:16.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap124:17.1_0": "Itthaṁ sudaṁ āyasmā pupphathūpiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap124:18.1_0": "Pupphathūpiyattherassāpadānaṁ dutiyaṁ."
}