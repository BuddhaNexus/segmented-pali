{
  "tha-ap39:0.1_0": "Therāpadāna",
  "tha-ap39:0.2_0": "Kuṇḍadhānavagga",
  "tha-ap39:0.3_0": "7. Lasuṇadāyakattheraapadāna",
  "tha-ap39:1.1_0": "“Himavantassāvidūre,",
  "tha-ap39:1.2_0": "tāpaso āsahaṁ tadā;",
  "tha-ap39:1.3_0": "Lasuṇaṁ upajīvāmi,",
  "tha-ap39:1.4_0": "lasuṇaṁ mayhabhojanaṁ.",
  "tha-ap39:2.1_0": "Khāriyo pūrayitvāna,",
  "tha-ap39:2.2_0": "saṅghārāmamagacchahaṁ;",
  "tha-ap39:2.3_0": "Haṭṭho haṭṭhena cittena,",
  "tha-ap39:2.4_0": "saṅghassa lasuṇaṁ adaṁ.",
  "tha-ap39:3.1_0": "Vipassissa naraggassa,",
  "tha-ap39:3.2_0": "sāsane niratassahaṁ;",
  "tha-ap39:3.3_0": "Saṅghassa lasuṇaṁ datvā,",
  "tha-ap39:3.4_0": "kappaṁ saggamhi modahaṁ.",
  "tha-ap39:4.1_0": "Ekanavutito kappe,",
  "tha-ap39:4.2_0": "lasuṇaṁ yamadaṁ tadā;",
  "tha-ap39:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap39:4.4_0": "lasuṇassa idaṁ phalaṁ.",
  "tha-ap39:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap39:5.2_0": "…pe…",
  "tha-ap39:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap39:6.1_0": "Itthaṁ sudaṁ āyasmā lasuṇadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap39:7.1_0": "Lasuṇadāyakattherassāpadānaṁ sattamaṁ."
}