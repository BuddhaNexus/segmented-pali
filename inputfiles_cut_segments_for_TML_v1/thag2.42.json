{
  "thag2.42:0.1_0": "Theragāthā",
  "thag2.42:0.2_0": "Dukanipāta",
  "thag2.42:0.3_0": "Pañcamavagga",
  "thag2.42:0.4_0": "2.42. Dhammapālattheragāthā",
  "thag2.42:1.1_0": "“Yo have daharo bhikkhu,",
  "thag2.42:1.2_0": "yuñjati buddhasāsane;",
  "thag2.42:1.3_0": "Jāgaro sa hi suttesu,",
  "thag2.42:1.4_0": "amoghaṁ tassa jīvitaṁ.",
  "thag2.42:2.1_0": "Tasmā saddhañca sīlañca,",
  "thag2.42:2.2_0": "pasādaṁ dhammadassanaṁ;",
  "thag2.42:2.3_0": "Anuyuñjetha medhāvī,",
  "thag2.42:2.4_0": "saraṁ buddhāna sāsanan”ti.",
  "thag2.42:2.5_0": "… Dhammapālo thero …."
}