{
  "anya-e0803n0:0_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0803n0:1_0": "Saddanītippakaraṇaṁ (padamālā)",
  "anya-e0803n0:2_0": "Ganthārambhakathā",
  "anya-e0803n0:3_0": "Dhīrehi magganāyena, yena buddhena desitaṁ;",
  "anya-e0803n0:4_0": "Sitaṁ dhammamidhaññāya, ñāyate amataṁ padaṁ.",
  "anya-e0803n0:5_0": "Taṁ namitvā mahāvīraṁ, sabbaññuṁ lokanāyakaṁ;",
  "anya-e0803n0:6_0": "Mahākāruṇikaṁ seṭṭhaṁ, visuddhaṁ suddhidāyakaṁ.",
  "anya-e0803n0:7_0": "Saddhammañcassa pūjetvā, suddhaṁ santamasaṅkhataṁ;",
  "anya-e0803n0:8_0": "Atakkāvacaraṁ suṭṭhu, vibhattaṁ madhuraṁ sivaṁ.",
  "anya-e0803n0:9_0": "Saṅghassa ca’ñjaliṁ katvā, puññakkhettassa tādino;",
  "anya-e0803n0:10_0": "Sīlasamādhipaññādi-visuddhaguṇajotino.",
  "anya-e0803n0:11_0": "Namassanādipuññassa, katassa ratanattaye;",
  "anya-e0803n0:12_0": "Tejasāhaṁ pahantvāna, antarāye asesato.",
  "anya-e0803n0:13_0": "Lokanītiviyattassa, satthu saddhammanītino;",
  "anya-e0803n0:14_0": "Sāsanatthaṁ pavakkhāmi, saddanītimanākulaṁ.",
  "anya-e0803n0:15_0": "Āsavakkhayalābhena, hoti sāsanasampadā;",
  "anya-e0803n0:16_0": "Āsavakkhayalābho ca, saccādhigamahetuko.",
  "anya-e0803n0:17_0": "Saccādhigamanaṁ tañca, paṭipattissitaṁ mataṁ;",
  "anya-e0803n0:18_0": "Paṭipatti ca sā kāmaṁ, pariyattiparāyaṇā.",
  "anya-e0803n0:19_0": "Pariyattābhiyuttānaṁ, viditvā saddalakkhaṇaṁ;",
  "anya-e0803n0:20_0": "Yasmā na hoti sammoho, akkharesu padesu ca.",
  "anya-e0803n0:21_0": "Yasmā cāmohabhāvena, akkharesu padesu ca;",
  "anya-e0803n0:22_0": "Pāḷiyatthaṁ vijānanti, viññū sugatasāsane.",
  "anya-e0803n0:23_0": "Pāḷiyatthāvabodhena, yoniso satthusāsane;",
  "anya-e0803n0:24_0": "Sappaññā paṭipajjanti, paṭipattimatandikā.",
  "anya-e0803n0:25_0": "Yoniso paṭipajjitvā, dhammaṁ lokuttaraṁ varaṁ;",
  "anya-e0803n0:26_0": "Pāpuṇanti visuddhāya, sīlādipaṭipattiyā.",
  "anya-e0803n0:27_0": "Tasmā tadatthikā suddhaṁ, nayaṁ nissāya viññunaṁ;",
  "anya-e0803n0:28_0": "Bhaññamānaṁ mayā sadda-nītiṁ gaṇhantu sādhukaṁ.",
  "anya-e0803n0:29_0": "Dhātu dhātūhi nipphanna-rūpāni ca salakkhaṇo;",
  "anya-e0803n0:30_0": "Sandhināmādibhedo ca, padānaṁ tu vibhatti ca.",
  "anya-e0803n0:31_0": "Pāḷinayādayocceva-mettha nānappakārato;",
  "anya-e0803n0:32_0": "Sāsanassopakārāya, bhavissati vibhāvanā."
}