{
  "thag2.28:0.1_0": "Theragāthā",
  "thag2.28:0.2_0": "Dukanipāta",
  "thag2.28:0.3_0": "Tatiyavagga",
  "thag2.28:0.4_0": "2.28. Bharatattheragāthā",
  "thag2.28:1.1_0": "“Ehi nandaka gacchāma,",
  "thag2.28:1.2_0": "upajjhāyassa santikaṁ;",
  "thag2.28:1.3_0": "Sīhanādaṁ nadissāma,",
  "thag2.28:1.4_0": "buddhaseṭṭhassa sammukhā.",
  "thag2.28:2.1_0": "Yāya no anukampāya,",
  "thag2.28:2.2_0": "amhe pabbājayī muni;",
  "thag2.28:2.3_0": "So no attho anuppatto,",
  "thag2.28:2.4_0": "sabbasaṁyojanakkhayo”ti.",
  "thag2.28:2.5_0": "… Bharato thero …."
}