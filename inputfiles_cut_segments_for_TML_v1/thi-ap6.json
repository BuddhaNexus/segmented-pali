{
  "thi-ap6:0.1_0": "Therīapadāna",
  "thi-ap6:0.2_0": "Sumedhāvagga",
  "thi-ap6:0.3_0": "6. Ekapiṇḍapātadāyikātherīapadāna",
  "thi-ap6:1.1_0": "“Nagare bandhumatiyā,",
  "thi-ap6:1.2_0": "bandhumā nāma khattiyo;",
  "thi-ap6:1.3_0": "Tassa rañño ahuṁ bhariyā,",
  "thi-ap6:1.4_0": "ekajjhaṁ cārayāmahaṁ.",
  "thi-ap6:2.1_0": "Rahogatā nisīditvā,",
  "thi-ap6:2.2_0": "evaṁ cintesahaṁ tadā;",
  "thi-ap6:2.3_0": "‘Ādāya gamanīyaṁ hi,",
  "thi-ap6:2.4_0": "kusalaṁ natthi me kataṁ.",
  "thi-ap6:3.1_0": "Mahābhitāpaṁ kaṭukaṁ,",
  "thi-ap6:3.2_0": "ghorarūpaṁ sudāruṇaṁ;",
  "thi-ap6:3.3_0": "Nirayaṁ nūna gacchāmi,",
  "thi-ap6:3.4_0": "ettha me natthi saṁsayo’.",
  "thi-ap6:4.1_0": "Rājānaṁ upasaṅkamma,",
  "thi-ap6:4.2_0": "idaṁ vacanamabraviṁ;",
  "thi-ap6:4.3_0": "‘Ekaṁ me samaṇaṁ dehi,",
  "thi-ap6:4.4_0": "bhojayissāmi khattiya’.",
  "thi-ap6:5.1_0": "Adāsi me mahārājā,",
  "thi-ap6:5.2_0": "samaṇaṁ bhāvitindriyaṁ;",
  "thi-ap6:5.3_0": "Tassa pattaṁ gahetvāna,",
  "thi-ap6:5.4_0": "paramannena pūrayiṁ.",
  "thi-ap6:6.1_0": "Pūrayitvā paramannaṁ,",
  "thi-ap6:6.2_0": "gandhālepaṁ akāsahaṁ;",
  "thi-ap6:6.3_0": "Jālena pidahitvāna,",
  "thi-ap6:6.4_0": "vatthayugena chādayiṁ.",
  "thi-ap6:7.1_0": "Ārammaṇaṁ mamaṁ etaṁ,",
  "thi-ap6:7.2_0": "sarāmi yāvajīvihaṁ;",
  "thi-ap6:7.3_0": "Tattha cittaṁ pasādetvā,",
  "thi-ap6:7.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap6:8.1_0": "Tiṁsānaṁ devarājūnaṁ,",
  "thi-ap6:8.2_0": "mahesittamakārayiṁ;",
  "thi-ap6:8.3_0": "Manasā patthitaṁ mayhaṁ,",
  "thi-ap6:8.4_0": "nibbattati yathicchitaṁ.",
  "thi-ap6:9.1_0": "Vīsānaṁ cakkavattīnaṁ,",
  "thi-ap6:9.2_0": "mahesittamakārayiṁ;",
  "thi-ap6:9.3_0": "Ocitattāva hutvāna,",
  "thi-ap6:9.4_0": "saṁsarāmi bhavesvahaṁ.",
  "thi-ap6:10.1_0": "Sabbabandhanamuttāhaṁ,",
  "thi-ap6:10.2_0": "apetā me upādikā;",
  "thi-ap6:10.3_0": "Sabbāsavā parikkhīṇā,",
  "thi-ap6:10.4_0": "natthi dāni punabbhavo.",
  "thi-ap6:11.1_0": "Ekanavutito kappe,",
  "thi-ap6:11.2_0": "yaṁ dānamadadiṁ tadā;",
  "thi-ap6:11.3_0": "Duggatiṁ nābhijānāmi,",
  "thi-ap6:11.4_0": "piṇḍapātassidaṁ phalaṁ.",
  "thi-ap6:12.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap6:12.2_0": "…pe…",
  "thi-ap6:12.3_0": "viharāmi anāsavā.",
  "thi-ap6:13.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap6:13.2_0": "…pe…",
  "thi-ap6:13.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap6:14.1_0": "Paṭisambhidā catasso,",
  "thi-ap6:14.2_0": "…pe…",
  "thi-ap6:14.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap6:15.1_0": "Itthaṁ sudaṁ ekapiṇḍapātadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap6:16.1_0": "Ekapiṇḍapātadāyikātheriyāpadānaṁ chaṭṭhaṁ."
}