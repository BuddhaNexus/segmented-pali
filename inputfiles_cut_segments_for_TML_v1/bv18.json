{
  "bv18:0.1_0": "Buddhavaṁsa",
  "bv18:0.2_0": "18. Siddhatthabuddhavaṁsa",
  "bv18:1.1_0": "“Dhammadassissa aparena,",
  "bv18:1.2_0": "siddhattho nāma nāyako;",
  "bv18:1.3_0": "Nihanitvā tamaṁ sabbaṁ,",
  "bv18:1.4_0": "sūriyo abbhuggato yathā.",
  "bv18:2.1_0": "Sopi patvāna sambodhiṁ,",
  "bv18:2.2_0": "santārento sadevakaṁ;",
  "bv18:2.3_0": "Abhivassi dhammameghena,",
  "bv18:2.4_0": "nibbāpento sadevakaṁ.",
  "bv18:3.1_0": "Tassāpi atulatejassa,",
  "bv18:3.2_0": "Ahesuṁ abhisamayā tayo;",
  "bv18:3.3_0": "Koṭisatasahassānaṁ,",
  "bv18:3.4_0": "Paṭhamābhisamayo ahu.",
  "bv18:4.1_0": "Punāparaṁ bhīmarathe,",
  "bv18:4.2_0": "yadā āhani dundubhiṁ;",
  "bv18:4.3_0": "Tadā navutikoṭīnaṁ,",
  "bv18:4.4_0": "dutiyābhisamayo ahu.",
  "bv18:5.1_0": "Yadā buddho dhammaṁ desesi,",
  "bv18:5.2_0": "vebhāre so puruttame;",
  "bv18:5.3_0": "Tadā navutikoṭīnaṁ,",
  "bv18:5.4_0": "tatiyābhisamayo ahu.",
  "bv18:6.1_0": "Sannipātā tayo āsuṁ,",
  "bv18:6.2_0": "tasmimpi dvipaduttame;",
  "bv18:6.3_0": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv18:6.4_0": "santacittāna tādinaṁ.",
  "bv18:7.1_0": "Koṭisatānaṁ navutīnaṁ,",
  "bv18:7.2_0": "asītiyāpi ca koṭinaṁ;",
  "bv18:7.3_0": "Ete āsuṁ tayo ṭhānā,",
  "bv18:7.4_0": "vimalānaṁ samāgame.",
  "bv18:8.1_0": "Ahaṁ tena samayena,",
  "bv18:8.2_0": "maṅgalo nāma tāpaso;",
  "bv18:8.3_0": "Uggatejo duppasaho,",
  "bv18:8.4_0": "abhiññābalasamāhito.",
  "bv18:9.1_0": "Jambuto phalamānetvā,",
  "bv18:9.2_0": "siddhatthassa adāsahaṁ;",
  "bv18:9.3_0": "Paṭiggahetvā sambuddho,",
  "bv18:9.4_0": "idaṁ vacanamabravi.",
  "bv18:10.1_0": "‘Passatha imaṁ tāpasaṁ,",
  "bv18:10.2_0": "jaṭilaṁ uggatāpanaṁ;",
  "bv18:10.3_0": "Catunnavutito kappe,",
  "bv18:10.4_0": "ayaṁ buddho bhavissati.",
  "bv18:11.1_0": "Padhānaṁ padahitvāna,",
  "bv18:11.2_0": "…pe…",
  "bv18:11.3_0": "hessāma sammukhā imaṁ’.",
  "bv18:12.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv18:12.2_0": "bhiyyo cittaṁ pasādayiṁ;",
  "bv18:12.3_0": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv18:12.4_0": "dasapāramipūriyā.",
  "bv18:13.1_0": "Vebhāraṁ nāma nagaraṁ,",
  "bv18:13.2_0": "udeno nāma khattiyo;",
  "bv18:13.3_0": "Suphassā nāma janikā,",
  "bv18:13.4_0": "siddhatthassa mahesino.",
  "bv18:14.1_0": "Dasavassasahassāni,",
  "bv18:14.2_0": "agāraṁ ajjha so vasi;",
  "bv18:14.3_0": "Kokāsuppalakokanadā,",
  "bv18:14.4_0": "tayo pāsādamuttamā.",
  "bv18:15.1_0": "Tisoḷasasahassāni,",
  "bv18:15.2_0": "nāriyo samalaṅkatā;",
  "bv18:15.3_0": "Somanassā nāma sā nārī,",
  "bv18:15.4_0": "anūpamo nāma atrajo.",
  "bv18:16.1_0": "Nimitte caturo disvā,",
  "bv18:16.2_0": "sivikāyābhinikkhami;",
  "bv18:16.3_0": "Anūnadasamāsāni,",
  "bv18:16.4_0": "padhānaṁ padahī jino.",
  "bv18:17.1_0": "Brahmunā yācito santo,",
  "bv18:17.2_0": "siddhattho lokanāyako;",
  "bv18:17.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv18:17.4_0": "migadāye naruttamo.",
  "bv18:18.1_0": "Sambalo ca sumitto ca,",
  "bv18:18.2_0": "ahesuṁ aggasāvakā;",
  "bv18:18.3_0": "Revato nāmupaṭṭhāko,",
  "bv18:18.4_0": "siddhatthassa mahesino.",
  "bv18:19.1_0": "Sīvalā ca surāmā ca,",
  "bv18:19.2_0": "ahesuṁ aggasāvikā;",
  "bv18:19.3_0": "Bodhi tassa bhagavato,",
  "bv18:19.4_0": "kaṇikāroti vuccati.",
  "bv18:20.1_0": "Suppiyo ca samuddo ca,",
  "bv18:20.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv18:20.3_0": "Rammā ceva surammā ca,",
  "bv18:20.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv18:21.1_0": "So buddho saṭṭhiratanaṁ,",
  "bv18:21.2_0": "ahosi nabhamuggato;",
  "bv18:21.3_0": "Kañcanagghiyasaṅkāso,",
  "bv18:21.4_0": "dasasahassī virocati.",
  "bv18:22.1_0": "Sopi buddho asamasamo,",
  "bv18:22.2_0": "atulo appaṭipuggalo;",
  "bv18:22.3_0": "Vassasatasahassāni,",
  "bv18:22.4_0": "loke aṭṭhāsi cakkhumā.",
  "bv18:23.1_0": "Vipulaṁ pabhaṁ dassayitvā,",
  "bv18:23.2_0": "pupphāpetvāna sāvake;",
  "bv18:23.3_0": "Vilāsetvā samāpatyā,",
  "bv18:23.4_0": "nibbuto so sasāvako.",
  "bv18:24.1_0": "Siddhattho munivaro buddho,",
  "bv18:24.2_0": "Anomārāmamhi nibbuto;",
  "bv18:24.3_0": "Tatthevassa thūpavaro,",
  "bv18:24.4_0": "Catuyojanamuggato”ti. ",
  "bv18:25.1_0": "Siddhatthassa bhagavato vaṁso soḷasamo."
}