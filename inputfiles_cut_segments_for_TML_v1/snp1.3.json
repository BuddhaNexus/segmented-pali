{
  "snp1.3:0.1_0": "Sutta Nipāta 1.3",
  "snp1.3:0.2_0": "Khaggavisāṇasutta",
  "snp1.3:1.1_0": "“Sabbesu bhūtesu nidhāya daṇḍaṁ,",
  "snp1.3:1.2_0": "Aviheṭhayaṁ aññatarampi tesaṁ;",
  "snp1.3:1.3_0": "Na puttamiccheyya kuto sahāyaṁ,",
  "snp1.3:1.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:2.1_0": "“Saṁsaggajātassa bhavanti snehā,",
  "snp1.3:2.2_0": "Snehanvayaṁ dukkhamidaṁ pahoti;",
  "snp1.3:2.3_0": "Ādīnavaṁ snehajaṁ pekkhamāno,",
  "snp1.3:2.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:3.1_0": "“Mitte suhajje anukampamāno,",
  "snp1.3:3.2_0": "Hāpeti atthaṁ paṭibaddhacitto;",
  "snp1.3:3.3_0": "Etaṁ bhayaṁ santhave pekkhamāno,",
  "snp1.3:3.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:4.1_0": "“Vaṁso visālova yathā visatto,",
  "snp1.3:4.2_0": "Puttesu dāresu ca yā apekkhā;",
  "snp1.3:4.3_0": "Vaṁsakkaḷīrova asajjamāno,",
  "snp1.3:4.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:5.1_0": "“Migo araññamhi yathā abaddho,",
  "snp1.3:5.2_0": "Yenicchakaṁ gacchati gocarāya;",
  "snp1.3:5.3_0": "Viññū naro seritaṁ pekkhamāno,",
  "snp1.3:5.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:6.1_0": "“Āmantanā hoti sahāyamajjhe,",
  "snp1.3:6.2_0": "Vāse ṭhāne gamane cārikāya;",
  "snp1.3:6.3_0": "Anabhijjhitaṁ seritaṁ pekkhamāno,",
  "snp1.3:6.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:7.1_0": "“Khiḍḍā ratī hoti sahāyamajjhe,",
  "snp1.3:7.2_0": "Puttesu ca vipulaṁ hoti pemaṁ;",
  "snp1.3:7.3_0": "Piyavippayogaṁ vijigucchamāno,",
  "snp1.3:7.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:8.1_0": "“Cātuddiso appaṭigho ca hoti,",
  "snp1.3:8.2_0": "Santussamāno itarītarena;",
  "snp1.3:8.3_0": "Parissayānaṁ sahitā achambhī,",
  "snp1.3:8.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:9.1_0": "“Dussaṅgahā pabbajitāpi eke,",
  "snp1.3:9.2_0": "Atho gahaṭṭhā gharamāvasantā;",
  "snp1.3:9.3_0": "Appossukko paraputtesu hutvā,",
  "snp1.3:9.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:10.1_0": "“Oropayitvā gihibyañjanāni,",
  "snp1.3:10.2_0": "Sañchinnapatto yathā koviḷāro;",
  "snp1.3:10.3_0": "Chetvāna vīro gihibandhanāni,",
  "snp1.3:10.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:11.1_0": "“Sace labhetha nipakaṁ sahāyaṁ,",
  "snp1.3:11.2_0": "Saddhiṁ caraṁ sādhuvihāridhīraṁ;",
  "snp1.3:11.3_0": "Abhibhuyya sabbāni parissayāni,",
  "snp1.3:11.4_0": "Careyya tenattamano satīmā”.",
  "snp1.3:12.1_0": "“No ce labhetha nipakaṁ sahāyaṁ,",
  "snp1.3:12.2_0": "Saddhiṁ caraṁ sādhuvihāridhīraṁ;",
  "snp1.3:12.3_0": "Rājāva raṭṭhaṁ vijitaṁ pahāya,",
  "snp1.3:12.4_0": "Eko care mātaṅgaraññeva nāgo”.",
  "snp1.3:13.1_0": "“Addhā pasaṁsāma sahāyasampadaṁ,",
  "snp1.3:13.2_0": "Seṭṭhā samā sevitabbā sahāyā;",
  "snp1.3:13.3_0": "Ete aladdhā anavajjabhojī,",
  "snp1.3:13.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:14.1_0": "“Disvā suvaṇṇassa pabhassarāni,",
  "snp1.3:14.2_0": "Kammāraputtena suniṭṭhitāni;",
  "snp1.3:14.3_0": "Saṅghaṭṭamānāni duve bhujasmiṁ,",
  "snp1.3:14.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:15.1_0": "“Evaṁ dutīyena sahā mamassa,",
  "snp1.3:15.2_0": "Vācābhilāpo abhisajjanā vā;",
  "snp1.3:15.3_0": "Etaṁ bhayaṁ āyatiṁ pekkhamāno,",
  "snp1.3:15.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:16.1_0": "“Kāmā hi citrā madhurā manoramā,",
  "snp1.3:16.2_0": "Virūparūpena mathenti cittaṁ;",
  "snp1.3:16.3_0": "Ādīnavaṁ kāmaguṇesu disvā,",
  "snp1.3:16.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:17.1_0": "“Ītī ca gaṇḍo ca upaddavo ca,",
  "snp1.3:17.2_0": "Rogo ca sallañca bhayañca metaṁ;",
  "snp1.3:17.3_0": "Etaṁ bhayaṁ kāmaguṇesu disvā,",
  "snp1.3:17.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:18.1_0": "“Sītañca uṇhañca khudaṁ pipāsaṁ,",
  "snp1.3:18.2_0": "Vātātape ḍaṁsasarīsape ca;",
  "snp1.3:18.3_0": "Sabbānipetāni abhisambhavitvā,",
  "snp1.3:18.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:19.1_0": "“Nāgova yūthāni vivajjayitvā,",
  "snp1.3:19.2_0": "Sañjātakhandho padumī uḷāro;",
  "snp1.3:19.3_0": "Yathābhirantaṁ viharaṁ araññe,",
  "snp1.3:19.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:20.1_0": "“Aṭṭhānataṁ saṅgaṇikāratassa,",
  "snp1.3:20.2_0": "Yaṁ phassaye sāmayikaṁ vimuttiṁ;",
  "snp1.3:20.3_0": "Ādiccabandhussa vaco nisamma,",
  "snp1.3:20.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:21.1_0": "“Diṭṭhīvisūkāni upātivatto,",
  "snp1.3:21.2_0": "Patto niyāmaṁ paṭiladdhamaggo;",
  "snp1.3:21.3_0": "Uppannañāṇomhi anaññaneyyo,",
  "snp1.3:21.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:22.1_0": "“Nillolupo nikkuho nippipāso,",
  "snp1.3:22.2_0": "Nimmakkho niddhantakasāvamoho;",
  "snp1.3:22.3_0": "Nirāsayo sabbaloke bhavitvā,",
  "snp1.3:22.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:23.1_0": "“Pāpaṁ sahāyaṁ parivajjayetha,",
  "snp1.3:23.2_0": "Anatthadassiṁ visame niviṭṭhaṁ;",
  "snp1.3:23.3_0": "Sayaṁ na seve pasutaṁ pamattaṁ,",
  "snp1.3:23.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:24.1_0": "“Bahussutaṁ dhammadharaṁ bhajetha,",
  "snp1.3:24.2_0": "Mittaṁ uḷāraṁ paṭibhānavantaṁ;",
  "snp1.3:24.3_0": "Aññāya atthāni vineyya kaṅkhaṁ,",
  "snp1.3:24.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:25.1_0": "“Khiḍḍaṁ ratiṁ kāmasukhañca loke,",
  "snp1.3:25.2_0": "Analaṅkaritvā anapekkhamāno;",
  "snp1.3:25.3_0": "Vibhūsanaṭṭhānā virato saccavādī,",
  "snp1.3:25.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:26.1_0": "“Puttañca dāraṁ pitarañca mātaraṁ,",
  "snp1.3:26.2_0": "Dhanāni dhaññāni ca bandhavāni;",
  "snp1.3:26.3_0": "Hitvāna kāmāni yathodhikāni,",
  "snp1.3:26.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:27.1_0": "“Saṅgo eso parittamettha sokhyaṁ,",
  "snp1.3:27.2_0": "Appassādo dukkhamettha bhiyyo;",
  "snp1.3:27.3_0": "Gaḷo eso iti ñatvā matīmā,",
  "snp1.3:27.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:28.1_0": "“Sandālayitvāna saṁyojanāni,",
  "snp1.3:28.2_0": "Jālaṁva bhetvā salilambucārī;",
  "snp1.3:28.3_0": "Aggīva daḍḍhaṁ anivattamāno,",
  "snp1.3:28.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:29.1_0": "“Okkhittacakkhu na ca pādalolo,",
  "snp1.3:29.2_0": "Guttindriyo rakkhitamānasāno;",
  "snp1.3:29.3_0": "Anavassuto apariḍayhamāno,",
  "snp1.3:29.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:30.1_0": "“Ohārayitvā gihibyañjanāni,",
  "snp1.3:30.2_0": "Sañchannapatto yathā pārichatto;",
  "snp1.3:30.3_0": "Kāsāyavattho abhinikkhamitvā,",
  "snp1.3:30.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:31.1_0": "“Rasesu gedhaṁ akaraṁ alolo,",
  "snp1.3:31.2_0": "Anaññaposī sapadānacārī;",
  "snp1.3:31.3_0": "Kule kule appaṭibaddhacitto,",
  "snp1.3:31.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:32.1_0": "“Pahāya pañcāvaraṇāni cetaso,",
  "snp1.3:32.2_0": "Upakkilese byapanujja sabbe;",
  "snp1.3:32.3_0": "Anissito chetva sinehadosaṁ,",
  "snp1.3:32.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:33.1_0": "“Vipiṭṭhikatvāna sukhaṁ dukhañca,",
  "snp1.3:33.2_0": "Pubbeva ca somanassadomanassaṁ;",
  "snp1.3:33.3_0": "Laddhānupekkhaṁ samathaṁ visuddhaṁ,",
  "snp1.3:33.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:34.1_0": "“Āraddhaviriyo paramatthapattiyā,",
  "snp1.3:34.2_0": "Alīnacitto akusītavutti;",
  "snp1.3:34.3_0": "Daḷhanikkamo thāmabalūpapanno,",
  "snp1.3:34.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:35.1_0": "“Paṭisallānaṁ jhānamariñcamāno,",
  "snp1.3:35.2_0": "Dhammesu niccaṁ anudhammacārī;",
  "snp1.3:35.3_0": "Ādīnavaṁ sammasitā bhavesu,",
  "snp1.3:35.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:36.1_0": "“Taṇhakkhayaṁ patthayamappamatto,",
  "snp1.3:36.2_0": "Aneḷamūgo sutavā satīmā;",
  "snp1.3:36.3_0": "Saṅkhātadhammo niyato padhānavā,",
  "snp1.3:36.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:37.1_0": "“Sīhova saddesu asantasanto,",
  "snp1.3:37.2_0": "Vātova jālamhi asajjamāno;",
  "snp1.3:37.3_0": "Padumaṁva toyena alippamāno,",
  "snp1.3:37.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:38.1_0": "“Sīho yathā dāṭhabalī pasayha,",
  "snp1.3:38.2_0": "Rājā migānaṁ abhibhuyya cārī;",
  "snp1.3:38.3_0": "Sevetha pantāni senāsanāni,",
  "snp1.3:38.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:39.1_0": "“Mettaṁ upekkhaṁ karuṇaṁ vimuttiṁ,",
  "snp1.3:39.2_0": "Āsevamāno muditañca kāle;",
  "snp1.3:39.3_0": "Sabbena lokena avirujjhamāno,",
  "snp1.3:39.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:40.1_0": "“Rāgañca dosañca pahāya mohaṁ,",
  "snp1.3:40.2_0": "Sandālayitvāna saṁyojanāni;",
  "snp1.3:40.3_0": "Asantasaṁ jīvitasaṅkhayamhi,",
  "snp1.3:40.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:41.1_0": "“Bhajanti sevanti ca kāraṇatthā,",
  "snp1.3:41.2_0": "Nikkāraṇā dullabhā ajja mittā;",
  "snp1.3:41.3_0": "Attaṭṭhapaññā asucī manussā,",
  "snp1.3:41.4_0": "Eko care khaggavisāṇakappo”.",
  "snp1.3:41.5_0": "Khaggavisāṇasuttaṁ tatiyaṁ."
}