{
  "ja526:0.1_0": "Jātaka",
  "ja526:0.2_0": "Paṇṇāsanipāta",
  "ja526:0.3_0": "Niḷinikāvagga",
  "ja526:0.4_0": "1 Niḷinikājātaka",
  "ja526:1.1_0": "“Uddayhate janapado,",
  "ja526:1.2_0": "raṭṭhañcāpi vinassati;",
  "ja526:1.3_0": "Ehi niḷinike gaccha,",
  "ja526:1.4_0": "taṁ me brāhmaṇamānaya”.",
  "ja526:2.1_0": "“Nāhaṁ dukkhakkhamā rāja,",
  "ja526:2.2_0": "nāhaṁ addhānakovidā;",
  "ja526:2.3_0": "Kathaṁ ahaṁ gamissāmi,",
  "ja526:2.4_0": "vanaṁ kuñjarasevitaṁ”.",
  "ja526:3.1_0": "“Phītaṁ janapadaṁ gantvā,",
  "ja526:3.2_0": "hatthinā ca rathena ca;",
  "ja526:3.3_0": "Dārusaṅghāṭayānena,",
  "ja526:3.4_0": "evaṁ gaccha niḷinike.",
  "ja526:4.1_0": "Hatthiassarathe pattī,",
  "ja526:4.2_0": "gacchevādāya khattiye;",
  "ja526:4.3_0": "Taveva vaṇṇarūpena,",
  "ja526:4.4_0": "vasaṁ tamānayissasi”.",
  "ja526:5.1_0": "“Kadalīdhajapaññāṇo,",
  "ja526:5.2_0": "ābhujīparivārito;",
  "ja526:5.3_0": "Eso padissati rammo,",
  "ja526:5.4_0": "isisiṅgassa assamo.",
  "ja526:6.1_0": "Eso aggissa saṅkhāto,",
  "ja526:6.2_0": "eso dhūmo padissati;",
  "ja526:6.3_0": "Maññe no aggiṁ hāpeti,",
  "ja526:6.4_0": "isisiṅgo mahiddhiko”.",
  "ja526:7.1_0": "“Tañca disvāna āyantiṁ,",
  "ja526:7.2_0": "āmuttamaṇikuṇḍalaṁ;",
  "ja526:7.3_0": "Isisiṅgo pāvisi bhīto,",
  "ja526:7.4_0": "assamaṁ paṇṇachādanaṁ.",
  "ja526:8.1_0": "Assamassa ca sā dvāre,",
  "ja526:8.2_0": "geṇḍukenassa kīḷati;",
  "ja526:8.3_0": "Vidaṁsayantī aṅgāni,",
  "ja526:8.4_0": "guyhaṁ pakāsitāni ca.",
  "ja526:9.1_0": "Tañca disvāna kīḷantiṁ,",
  "ja526:9.2_0": "paṇṇasālagato jaṭī;",
  "ja526:9.3_0": "Assamā nikkhamitvāna,",
  "ja526:9.4_0": "idaṁ vacanamabravi.",
  "ja526:10.1_0": "Ambho ko nāma so rukkho,",
  "ja526:10.2_0": "yassa tevaṅgataṁ phalaṁ;",
  "ja526:10.3_0": "Dūrepi khittaṁ pacceti,",
  "ja526:10.4_0": "na taṁ ohāya gacchati”.",
  "ja526:11.1_0": "“Assamassa mama brahme,",
  "ja526:11.2_0": "samīpe gandhamādane;",
  "ja526:11.3_0": "Bahavo tādisā rukkhā,",
  "ja526:11.4_0": "yassa tevaṅgataṁ phalaṁ;",
  "ja526:11.5_0": "Dūrepi khittaṁ pacceti,",
  "ja526:11.6_0": "na maṁ ohāya gacchati”.",
  "ja526:12.1_0": "“Etū bhavaṁ assamimaṁ adetu,",
  "ja526:12.2_0": "Pajjañca bhakkhañca paṭiccha dammi;",
  "ja526:12.3_0": "Idamāsanaṁ atra bhavaṁ nisīdatu,",
  "ja526:12.4_0": "Ito bhavaṁ mūlaphalāni bhuñjatu.",
  "ja526:13.1_0": "Kiṁ te idaṁ ūrūnamantarasmiṁ,",
  "ja526:13.2_0": "Supicchitaṁ kaṇharivappakāsati;",
  "ja526:13.3_0": "Akkhāhi me pucchito etamatthaṁ,",
  "ja526:13.4_0": "Kose nu te uttamaṅgaṁ paviṭṭhaṁ”.",
  "ja526:14.1_0": "“Ahaṁ vane mūlaphalesanaṁ caraṁ,",
  "ja526:14.2_0": "Āsādayiṁ acchaṁ sughorarūpaṁ;",
  "ja526:14.3_0": "So maṁ patitvā sahasājjhapatto,",
  "ja526:14.4_0": "Panujja maṁ abbahi uttamaṅgaṁ.",
  "ja526:15.1_0": "Svāyaṁ vaṇo khajjati kaṇḍuvāyati,",
  "ja526:15.2_0": "Sabbañca kālaṁ na labhāmi sātaṁ;",
  "ja526:15.3_0": "Paho bhavaṁ kaṇḍumimaṁ vinetuṁ,",
  "ja526:15.4_0": "Kurutaṁ bhavaṁ yācito brāhmaṇatthaṁ”.",
  "ja526:16.1_0": "“Gambhīrarūpo te vaṇo salohito,",
  "ja526:16.2_0": "Apūtiko vaṇagandho mahā ca;",
  "ja526:16.3_0": "Karomi te kiñci kasāyayogaṁ,",
  "ja526:16.4_0": "Yathā bhavaṁ paramasukhī bhaveyya”.",
  "ja526:17.1_0": "“Na mantayogā na kasāyayogā,",
  "ja526:17.2_0": "Na osadhā brahmacāri kamanti;",
  "ja526:17.3_0": "Yaṁ te mudu tena vinehi kaṇḍuṁ,",
  "ja526:17.4_0": "Yathā ahaṁ paramasukhī bhaveyyaṁ”.",
  "ja526:18.1_0": "“Ito nu bhoto katamena assamo,",
  "ja526:18.2_0": "Kacci bhavaṁ abhiramasi araññe;",
  "ja526:18.3_0": "Kacci nu te mūlaphalaṁ pahūtaṁ,",
  "ja526:18.4_0": "Kacci bhavantaṁ na vihiṁsanti vāḷā”.",
  "ja526:19.1_0": "“Ito ujuṁ uttarāyaṁ disāyaṁ,",
  "ja526:19.2_0": "Khemānadī himavatā pabhāvī;",
  "ja526:19.3_0": "Tassā tīre assamo mayha rammo,",
  "ja526:19.4_0": "Aho bhavaṁ assamaṁ mayhaṁ passe.",
  "ja526:20.1_0": "Ambā ca sālā tilakā ca jambuyo,",
  "ja526:20.2_0": "Uddālakā pāṭaliyo ca phullā;",
  "ja526:20.3_0": "Samantato kimpurisābhigītaṁ,",
  "ja526:20.4_0": "Aho bhavaṁ assamaṁ mayhaṁ passe.",
  "ja526:21.1_0": "Tālā ca mūlā ca phalā ca mettha,",
  "ja526:21.2_0": "Vaṇṇena gandhena upetarūpaṁ;",
  "ja526:21.3_0": "Taṁ bhūmibhāgehi upetarūpaṁ,",
  "ja526:21.4_0": "Aho bhavaṁ assamaṁ mayhaṁ passe.",
  "ja526:22.1_0": "Phalā ca mūlā ca pahūtamettha,",
  "ja526:22.2_0": "Vaṇṇena gandhena rasenupetā;",
  "ja526:22.3_0": "Āyanti ca luddakā taṁ padesaṁ,",
  "ja526:22.4_0": "Mā me tato mūlaphalaṁ ahāsuṁ”.",
  "ja526:23.1_0": "“Pitā mamaṁ mūlaphalesanaṁ gato,",
  "ja526:23.2_0": "Idāni āgacchati sāyakāle;",
  "ja526:23.3_0": "Ubhova gacchāmase assamaṁ taṁ,",
  "ja526:23.4_0": "Yāva pitā mūlaphalato etu”.",
  "ja526:24.1_0": "“Aññe bahū isayo sādhurūpā,",
  "ja526:24.2_0": "Rājīsayo anumagge vasanti;",
  "ja526:24.3_0": "Teyeva pucchesi mamassamaṁ taṁ,",
  "ja526:24.4_0": "Te taṁ nayissanti mamaṁ sakāse”.",
  "ja526:25.1_0": "“Na te kaṭṭhāni bhinnāni,",
  "ja526:25.2_0": "na te udakamābhataṁ;",
  "ja526:25.3_0": "Aggīpi te na hāpito,",
  "ja526:25.4_0": "kiṁ nu mandova jhāyasi.",
  "ja526:26.1_0": "Bhinnāni kaṭṭhāni huto ca aggi,",
  "ja526:26.2_0": "Tapanīpi te samitā brahmacārī;",
  "ja526:26.3_0": "Pīṭhañca mayhaṁ udakañca hoti,",
  "ja526:26.4_0": "Ramasi tuvaṁ brahmabhūto puratthā.",
  "ja526:27.1_0": "Abhinnakaṭṭhosi anābhatodako,",
  "ja526:27.2_0": "Ahāpitaggīsi asiddhabhojano;",
  "ja526:27.3_0": "Na me tuvaṁ ālapasī mamajja,",
  "ja526:27.4_0": "Naṭṭhaṁ nu kiṁ cetasikañca dukkhaṁ”.",
  "ja526:28.1_0": "“Idhāgamā jaṭilo brahmacārī,",
  "ja526:28.2_0": "Sudassaneyyo sutanū vineti;",
  "ja526:28.3_0": "Nevātidīgho na panātirasso,",
  "ja526:28.4_0": "Sukaṇhakaṇhacchadanehi bhoto.",
  "ja526:29.1_0": "Amassujāto apurāṇavaṇṇī,",
  "ja526:29.2_0": "Ādhārarūpañca panassa kaṇṭhe;",
  "ja526:29.3_0": "Dve yamā gaṇḍā ure sujātā,",
  "ja526:29.4_0": "Suvaṇṇatindukanibhā pabhassarā.",
  "ja526:30.1_0": "Mukhañca tassa bhusadassaneyyaṁ,",
  "ja526:30.2_0": "Kaṇṇesu lambanti ca kuñcitaggā;",
  "ja526:30.3_0": "Te jotare carato māṇavassa,",
  "ja526:30.4_0": "Suttañca yaṁ saṁyamanaṁ jaṭānaṁ.",
  "ja526:31.1_0": "Aññā ca tassa saṁyamāni catasso,",
  "ja526:31.2_0": "Nīlā pītā lohitikā ca setā;",
  "ja526:31.3_0": "Tā piṁsare carato māṇavassa,",
  "ja526:31.4_0": "Tiriṭisaṅghāriva pāvusamhi.",
  "ja526:32.1_0": "Na mikhalaṁ muñjamayaṁ dhāreti,",
  "ja526:32.2_0": "Na santhare no pana pabbajassa;",
  "ja526:32.3_0": "Tā jotare jaghanantare vilaggā,",
  "ja526:32.4_0": "Sateratā vijjurivantalikkhe.",
  "ja526:33.1_0": "Akhīlakāni ca avaṇṭakāni,",
  "ja526:33.2_0": "Heṭṭhā nabhyā kaṭisamohitāni;",
  "ja526:33.3_0": "Aghaṭṭitā niccakīḷaṁ karonti,",
  "ja526:33.4_0": "Haṁ tāta kiṁrukkhaphalāni tāni.",
  "ja526:34.1_0": "Jaṭā ca tassa bhusadassaneyyā,",
  "ja526:34.2_0": "Parosataṁ vellitaggā sugandhā;",
  "ja526:34.3_0": "Dvedhā siro sādhu vibhattarūpo,",
  "ja526:34.4_0": "Aho nu kho mayha tathā jaṭāssu.",
  "ja526:35.1_0": "Yadā ca so pakirati tā jaṭāyo,",
  "ja526:35.2_0": "Vaṇṇena gandhena upetarūpā;",
  "ja526:35.3_0": "Nīluppalaṁ vātasameritaṁva,",
  "ja526:35.4_0": "Tatheva saṁvāti panassamo ayaṁ.",
  "ja526:36.1_0": "Paṅko ca tassa bhusadassaneyyo,",
  "ja526:36.2_0": "Netādiso yādiso mayhaṁ kāye;",
  "ja526:36.3_0": "So vāyatī erito mālutena,",
  "ja526:36.4_0": "Vanaṁ yathā aggagimhe suphullaṁ.",
  "ja526:37.1_0": "Nihanti so rukkhaphalaṁ pathabyā,",
  "ja526:37.2_0": "Sucittarūpaṁ ruciraṁ dassaneyyaṁ;",
  "ja526:37.3_0": "Khittañca tassa punareti hatthaṁ,",
  "ja526:37.4_0": "Haṁ tāta kiṁrukkhaphalaṁ nu kho taṁ.",
  "ja526:38.1_0": "Dantā ca tassa bhusadassaneyyā,",
  "ja526:38.2_0": "Suddhā samā saṅkhavarūpapannā;",
  "ja526:38.3_0": "Mano pasādenti vivariyamānā,",
  "ja526:38.4_0": "Na hi nūna so sākamakhādi tehi.",
  "ja526:39.1_0": "Akakkasaṁ aggaḷitaṁ muhuṁ muduṁ,",
  "ja526:39.2_0": "Ujuṁ anuddhataṁ acapalamassa bhāsitaṁ;",
  "ja526:39.3_0": "Rudaṁ manuññaṁ karavīkasussaraṁ,",
  "ja526:39.4_0": "Hadayaṅgamaṁ rañjayateva me mano.",
  "ja526:40.1_0": "Bindussaro nātivisaṭṭhavākyo,",
  "ja526:40.2_0": "Na nūna sajjhāyamatippayutto;",
  "ja526:40.3_0": "Icchāmi bho taṁ punadeva daṭṭhuṁ,",
  "ja526:40.4_0": "Mitto hi me māṇavohu puratthā.",
  "ja526:41.1_0": "Susandhi sabbattha vimaṭṭhimaṁ vaṇaṁ,",
  "ja526:41.2_0": "Puthū sujātaṁ kharapattasannitaṁ;",
  "ja526:41.3_0": "Teneva maṁ uttariyāna māṇavo,",
  "ja526:41.4_0": "Vivaritaṁ ūruṁ jaghanena piḷayi.",
  "ja526:42.1_0": "Tapanti ābhanti virocare ca,",
  "ja526:42.2_0": "Sateratā vijjurivantalikkhe;",
  "ja526:42.3_0": "Bāhā mudū añjanalomasādisā,",
  "ja526:42.4_0": "Vicitravaṭṭaṅgulikāssa sobhare.",
  "ja526:43.1_0": "Akakkasaṅgo na ca dīghalomo,",
  "ja526:43.2_0": "Nakhāssa dīghā api lohitaggā;",
  "ja526:43.3_0": "Mudūhi bāhāhi palissajanto,",
  "ja526:43.4_0": "Kalyāṇarūpo ramayaṁ upaṭṭhahi.",
  "ja526:44.1_0": "Dumassa tūlūpanibhā pabhassarā,",
  "ja526:44.2_0": "Suvaṇṇakambutalavaṭṭasucchavi;",
  "ja526:44.3_0": "Hatthā mudū tehi maṁ samphusitvā,",
  "ja526:44.4_0": "Ito gato tena maṁ dahanti tāta.",
  "ja526:45.1_0": "Na nūna so khārividhaṁ ahāsi,",
  "ja526:45.2_0": "Na nūna so kaṭṭhāni sayaṁ abhañji;",
  "ja526:45.3_0": "Na nūna so hanti dume kuṭhāriyā,",
  "ja526:45.4_0": "Na hissa hatthesu khilāni atthi.",
  "ja526:46.1_0": "Accho ca kho tassa vaṇaṁ akāsi,",
  "ja526:46.2_0": "So maṁbravi sukhitaṁ maṁ karohi;",
  "ja526:46.3_0": "Tāhaṁ kariṁ tena mamāsi sokhyaṁ,",
  "ja526:46.4_0": "So cabravi ‘sukhitosmī’ti brahme.",
  "ja526:47.1_0": "Ayañca te māluvapaṇṇasanthatā,",
  "ja526:47.2_0": "Vikiṇṇarūpāva mayā ca tena ca;",
  "ja526:47.3_0": "Kilantarūpā udake ramitvā,",
  "ja526:47.4_0": "Punappunaṁ paṇṇakuṭiṁ vajāma.",
  "ja526:48.1_0": "Na majja mantā paṭibhanti tāta,",
  "ja526:48.2_0": "Na aggihuttaṁ napi yaññatantaṁ;",
  "ja526:48.3_0": "Na cāpi te mūlaphalāni bhuñje,",
  "ja526:48.4_0": "Yāva na passāmi taṁ brahmacāriṁ.",
  "ja526:49.1_0": "Addhā pajānāsi tuvampi tāta,",
  "ja526:49.2_0": "Yassaṁ disaṁ vasate brahmacārī;",
  "ja526:49.3_0": "Taṁ maṁ disaṁ pāpaya tāta khippaṁ,",
  "ja526:49.4_0": "Mā te ahaṁ amarimassamamhi.",
  "ja526:50.1_0": "Vicitraphullaṁ hi vanaṁ sutaṁ mayā,",
  "ja526:50.2_0": "Dijābhighuṭṭhaṁ dijasaṅghasevitaṁ;",
  "ja526:50.3_0": "Taṁ maṁ vanaṁ pāpaya tāta khippaṁ,",
  "ja526:50.4_0": "Purā te pāṇaṁ vijahāmi assame”.",
  "ja526:51.1_0": "“Imasmāhaṁ jotirase vanamhi,",
  "ja526:51.2_0": "Gandhabbadevaccharasaṅghasevite;",
  "ja526:51.3_0": "Isīnamāvāse sanantanamhi,",
  "ja526:51.4_0": "Netādisaṁ aratiṁ pāpuṇetha.",
  "ja526:52.1_0": "Bhavanti mittāni atho na honti,",
  "ja526:52.2_0": "Ñātīsu mittesu karonti pemaṁ;",
  "ja526:52.3_0": "Ayañca jammo kissa vā niviṭṭho,",
  "ja526:52.4_0": "Yo neva jānāti kutomhi āgato.",
  "ja526:53.1_0": "Saṁvāsena hi mittāni,",
  "ja526:53.2_0": "sandhīyanti punappunaṁ;",
  "ja526:53.3_0": "Sveva mitto asaṅgantu,",
  "ja526:53.4_0": "asaṁvāsena jīrati.",
  "ja526:54.1_0": "Sace tuvaṁ dakkhasi brahmacāriṁ,",
  "ja526:54.2_0": "Sace tuvaṁ sallape brahmacārinā;",
  "ja526:54.3_0": "Sampannasassaṁva mahodakena,",
  "ja526:54.4_0": "Tapoguṇaṁ khippamimaṁ pahissasi.",
  "ja526:55.1_0": "Punapi ce dakkhasi brahmacāriṁ,",
  "ja526:55.2_0": "Punapi ce sallape brahmacārinā;",
  "ja526:55.3_0": "Sampannasassaṁva mahodakena,",
  "ja526:55.4_0": "Usmāgataṁ khippamimaṁ pahissasi.",
  "ja526:56.1_0": "Bhūtāni hetāni caranti tāta,",
  "ja526:56.2_0": "Virūparūpena manussaloke;",
  "ja526:56.3_0": "Na tāni sevetha naro sapañño,",
  "ja526:56.4_0": "Āsajja naṁ nassati brahmacārī”ti.",
  "ja526:57.1_0": "Niḷinikājātakaṁ paṭhamaṁ."
}