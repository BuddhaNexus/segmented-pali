{
  "anya-e0703n18:0_0": "Ekūnavīsatima pariccheda",
  "anya-e0703n18:1_0": "Bodhi āgamano",
  "anya-e0703n18:2_0": "1.",
  "anya-e0703n18:3_0": "Mahābodhirakkhaṇatthaṁ , aṭṭhārasa rathe sabho;",
  "anya-e0703n18:4_0": "Devakulāni datvāna, aṭṭhāmaccā kulāni ca.",
  "anya-e0703n18:5_0": "2.",
  "anya-e0703n18:6_0": "Aṭṭha brāhmaṇakulāni, aṭṭha vassakulāni ca;",
  "anya-e0703n18:7_0": "Gopakānaṁ taracchānaṁ, kuliṅgānaṁ kulāni ca.",
  "anya-e0703n18:8_0": "3.",
  "anya-e0703n18:9_0": "Tatheva pesakārānaṁ, kumbhakārānameva ca;",
  "anya-e0703n18:10_0": "Sabbe sañcāpi senīnaṁ, nāgayakkhānameva ca.",
  "anya-e0703n18:11_0": "4.",
  "anya-e0703n18:12_0": "Hemasajjughaṭeceva, datvā aṭṭhaṭṭha mānado;",
  "anya-e0703n18:13_0": "Āropetvā mahābodhiṁ, nāvaṁ gaṅgāya bhūsitaṁ.",
  "anya-e0703n18:14_0": "5.",
  "anya-e0703n18:15_0": "Saṅghamitta mahātherī, sahe kadasa bhikkhuniṁ;",
  "anya-e0703n18:16_0": "Tathevā’ropayitvāna, ariṭṭhapamukhepi ca.",
  "anya-e0703n18:17_0": "6.",
  "anya-e0703n18:18_0": "Nagarā nikkhamitvāna, viñjāṭavimaticcaso;",
  "anya-e0703n18:19_0": "Tāmalitthiṁ anuppatto, sattāhene’va bhūpati.",
  "anya-e0703n18:20_0": "7.",
  "anya-e0703n18:21_0": "Accuḷā rāhi pūjāyi, devānāgānarāpi ca;",
  "anya-e0703n18:22_0": "Mahābodhiṁ pūjayantā, sattāhena’vupāgamuṁ.",
  "anya-e0703n18:23_0": "8.",
  "anya-e0703n18:24_0": "Mahāsamuddatīramhi, mahābodhiṁ mahīpati;",
  "anya-e0703n18:25_0": "Ṭhapāpetvāna pūjesi, mahārajjena so puna.",
  "anya-e0703n18:26_0": "9.",
  "anya-e0703n18:27_0": "Mahābodhiṁ mahārajje, abhisiñcīyakāmado;",
  "anya-e0703n18:28_0": "Aggasira sukkapakkhe, dine pāṭipade tato.",
  "anya-e0703n18:29_0": "10.",
  "anya-e0703n18:30_0": "Uccāretuṁ mahābodhiṁ, tehiyeva’ṭṭha aṭṭhahi;",
  "anya-e0703n18:31_0": "Sālamūlamhi dinnehi, dhātuggatakulehi so.",
  "anya-e0703n18:32_0": "11.",
  "anya-e0703n18:33_0": "Ukkhipitvā mahābodhiṁ, galamattaṁ jalaṁ tahiṁ;",
  "anya-e0703n18:34_0": "Ogāhetvā sanāvāya, patiṭṭhāpayi sādhukaṁ.",
  "anya-e0703n18:35_0": "12.",
  "anya-e0703n18:36_0": "Nāvaṁ āropayitvā taṁ, mahātheriṁ satherikaṁ;",
  "anya-e0703n18:37_0": "Mahāriṭṭhaṁ mahāmaccaṁ, idaṁ vacanamabravi.",
  "anya-e0703n18:38_0": "13.",
  "anya-e0703n18:39_0": "‘‘Ahaṁ rajjena tikkhattuṁ, mahābodhimapūjayiṁ;",
  "anya-e0703n18:40_0": "Eva mevā’bhi pūjetu, rājā rajjena me sakhā’’.",
  "anya-e0703n18:41_0": "14.",
  "anya-e0703n18:42_0": "Idaṁ vatvā mahārājā, tīre pañjaliko ṭhito;",
  "anya-e0703n18:43_0": "Gacchamānaṁ mahābodhiṁ, passaṁ assūnivattayi.",
  "anya-e0703n18:44_0": "15.",
  "anya-e0703n18:45_0": "Mahābodhi viyogena,",
  "anya-e0703n18:46_0": "Dhammā soko sasokavā;",
  "anya-e0703n18:47_0": "Kannitvā paridevitvā,",
  "anya-e0703n18:48_0": "Agamāsi sakaṁ puraṁ.",
  "anya-e0703n18:49_0": "16.",
  "anya-e0703n18:50_0": "Mahābodhi samāruḷhā, nāvāpakkhandhī toyadhiṁ;",
  "anya-e0703n18:51_0": "Samantā yojane vicī, sannisīdi mahaṇṇave.",
  "anya-e0703n18:52_0": "17.",
  "anya-e0703n18:53_0": "Pupphiṁsu pañcavaṇṇāni, padumāni samantato;",
  "anya-e0703n18:54_0": "Antalikkhe pavajjiṁsu, aneka tūriyāni ca.",
  "anya-e0703n18:55_0": "18.",
  "anya-e0703n18:56_0": "Devatāhi anekāhi, pūjā’nekā pavattitā;",
  "anya-e0703n18:57_0": "Gahetuñca mahābodhi, nāgā’kāsuṁ vikubbanaṁ.",
  "anya-e0703n18:58_0": "19.",
  "anya-e0703n18:59_0": "Saṅghamittā mahātheri, abhiññābalapāragā;",
  "anya-e0703n18:60_0": "Supaṇṇarūpā hutvāna, te tāsesi mahorage.",
  "anya-e0703n18:61_0": "20.",
  "anya-e0703n18:62_0": "Te tāsitā mahātheriṁ, yācitvāna mahoragā;",
  "anya-e0703n18:63_0": "Nayitvāna mahābemadhiṁ, bhujaṅgabhavanaṁ tato.",
  "anya-e0703n18:64_0": "21.",
  "anya-e0703n18:65_0": "Sattāhaṁ nāgarajjena, pūjāhi vividhāhi ca;",
  "anya-e0703n18:66_0": "Pūjayitvāna ānetvā, nāvāyaṁ ṭhapayiṁsu te.",
  "anya-e0703n18:67_0": "22.",
  "anya-e0703n18:68_0": "Tadaheva mahābodhi, jambukolamidhagamā;",
  "anya-e0703n18:69_0": "Devānaṁpiyatisso tu, rājā lokahite rato.",
  "anya-e0703n18:70_0": "23.",
  "anya-e0703n18:71_0": "Sumanā sāmaṇeramhā, pubbe sutatadāgamo;",
  "anya-e0703n18:72_0": "Maggasirādidinagho, pabhuti vacasādaro.",
  "anya-e0703n18:73_0": "24.",
  "anya-e0703n18:74_0": "Uttaradvārato yāva, jambukolaṁ mahāpathaṁ;",
  "anya-e0703n18:75_0": "Vibhūsayitvā sakalaṁ, mahābodhigatāsayo.",
  "anya-e0703n18:76_0": "25.",
  "anya-e0703n18:77_0": "Samuddāsanasālāya, ṭhāne ṭhatvā mahaṇṇave;",
  "anya-e0703n18:78_0": "Āgacchantaṁ mahābodhiṁ, mahātheriddhiyā’ddasa.",
  "anya-e0703n18:79_0": "26.",
  "anya-e0703n18:80_0": "Tasmiṁṭhāne katā sālā, pakā setuṁ tamabbhutaṁ;",
  "anya-e0703n18:81_0": "Samuddāsanasālāti, nāmenā‘si’dha pākaṭā.",
  "anya-e0703n18:82_0": "27.",
  "anya-e0703n18:83_0": "Mahātherānubhāvena, saddhiṁ therehi tehi ca;",
  "anya-e0703n18:84_0": "Tadaheva’gamā rājā, jambukolaṁ sa senako.",
  "anya-e0703n18:85_0": "28.",
  "anya-e0703n18:86_0": "Mahābodhā gamepīti-vegenu’nno udānayaṁ;",
  "anya-e0703n18:87_0": "Galappamāṇaṁ salilaṁ, vigāhetvā suviggaho.",
  "anya-e0703n18:88_0": "29.",
  "anya-e0703n18:89_0": "Mahābodhiṁ soḷasahi, kulehi saha muddhanā;",
  "anya-e0703n18:90_0": "Ādāyo’ropayitvāna, velāyaṁ maṇḍape subhe.",
  "anya-e0703n18:91_0": "30.",
  "anya-e0703n18:92_0": "Ṭhapayitvāna laṁkindo, laṁkārajjena pūjayi;",
  "anya-e0703n18:93_0": "Soḷasannaṁ samappetvā, kulānaṁ rajjamattano.",
  "anya-e0703n18:94_0": "31.",
  "anya-e0703n18:95_0": "Sayaṁ dovārikaṭhāne, ṭhatvāna divase tayo;",
  "anya-e0703n18:96_0": "Tattheva pūjaṁ kāresi, vividhaṁ manujādhipo.",
  "anya-e0703n18:97_0": "32.",
  "anya-e0703n18:98_0": "Mahābodhiṁ dasamiyaṁ, āropetvā rathesubhe;",
  "anya-e0703n18:99_0": "Ānayanto manussindo, dumindaṁ taṁ ṭhapāpayi.",
  "anya-e0703n18:100_0": "33.",
  "anya-e0703n18:101_0": "Pācinassa vihārassa, ṭhāne ṭhānavicakkhaṇo;",
  "anya-e0703n18:102_0": "Pātarāsaṁ pavattesi, sasaṅghassa janassa so.",
  "anya-e0703n18:103_0": "34.",
  "anya-e0703n18:104_0": "Mahāmahindathere’ttha, kataṁ dasabalena taṁ;",
  "anya-e0703n18:105_0": "Kathesi nāgadamanaṁ, rañño tassa asesato.",
  "anya-e0703n18:106_0": "35.",
  "anya-e0703n18:107_0": "Therassa sutvā kāretvā, saññāṇāni tahiṁ tahiṁ;",
  "anya-e0703n18:108_0": "Paribhuttesu ṭhānesu, nisajjādīhi satthunā.",
  "anya-e0703n18:109_0": "36.",
  "anya-e0703n18:110_0": "Tivakkassa brāhmaṇassa, gāmadvāre ca bhūpati;",
  "anya-e0703n18:111_0": "Ṭhapāpetvā mahābodhiṁ, ṭhānesu tesu tesu ca.",
  "anya-e0703n18:112_0": "37.",
  "anya-e0703n18:113_0": "Suddhavāluka santhāre, nānāpupphasamākule;",
  "anya-e0703n18:114_0": "Paggahitadhaje magge, pupphagghikavibhūsite.",
  "anya-e0703n18:115_0": "38.",
  "anya-e0703n18:116_0": "Mahābodhiṁ pūjayanto, rattindiva matandito;",
  "anya-e0703n18:117_0": "Ānayitvā cuddasiyaṁ, anurādha purantikaṁ.",
  "anya-e0703n18:118_0": "39.",
  "anya-e0703n18:119_0": "Vaḍḍhamānakacchāyāya, puraṁ sādhu vibhūsitaṁ;",
  "anya-e0703n18:120_0": "Uttarena ca dvārena, pūjayanto pavesiya.",
  "anya-e0703n18:121_0": "40.",
  "anya-e0703n18:122_0": "Dakkhiṇena ca dvārena, nikkhamitvā pavesiya;",
  "anya-e0703n18:123_0": "Mahā meghavanārāmaṁ, catubuddhanisevitaṁ.",
  "anya-e0703n18:124_0": "41.",
  "anya-e0703n18:125_0": "Sumanasseva vacasā, padesaṁ sādhusaṅkhataṁ;",
  "anya-e0703n18:126_0": "Pubbabodhiṭhitaṭṭhānaṁ, upanetvā manoramaṁ.",
  "anya-e0703n18:127_0": "42.",
  "anya-e0703n18:128_0": "Kulehi so soḷasahi, rājā laṅkāradhārihi;",
  "anya-e0703n18:129_0": "Oropetvā mahābodhiṁ, patiṭṭhā petu mossajji.",
  "anya-e0703n18:130_0": "43.",
  "anya-e0703n18:131_0": "Hatthato muttamattasā, asītiratanaṁ nabhaṁ;",
  "anya-e0703n18:132_0": "Uggantvāna ṭhitā muñci, chabbaṇṇā rasmiyo subhā.",
  "anya-e0703n18:133_0": "44.",
  "anya-e0703n18:134_0": "Dīpe patthariyā’hacca, brahmalokaṁ ṭhitā ahu;",
  "anya-e0703n18:135_0": "Sūriyatthaṅgamanāyāva, rasmiyo tā manoramā.",
  "anya-e0703n18:136_0": "45.",
  "anya-e0703n18:137_0": "Purisā dasasahassāni, pasannā pāṭihāriye;",
  "anya-e0703n18:138_0": "Vipassitvānā’rahatthaṁ, patvāna idha pabbajuṁ.",
  "anya-e0703n18:139_0": "46.",
  "anya-e0703n18:140_0": "Orohitvā mahābodhi, sūriyatthaṅgame tato;",
  "anya-e0703n18:141_0": "Rohiṇiyā patiṭṭhāsi, mahiyaṁ kampi medinī.",
  "anya-e0703n18:142_0": "47.",
  "anya-e0703n18:143_0": "Mūlāni tāni uggantvā, kaṭāhamukhavaṭṭito;",
  "anya-e0703n18:144_0": "Vinandhantā kaṭāhaṁ taṁ, otariṁsu mahītalaṁ.",
  "anya-e0703n18:145_0": "48.",
  "anya-e0703n18:146_0": "Patiṭṭhitaṁ mahābodhiṁ, janā sabbe samagatā;",
  "anya-e0703n18:147_0": "Gandhamālādi pūjāhi, pūjayiṁsu samantato.",
  "anya-e0703n18:148_0": "49.",
  "anya-e0703n18:149_0": "Mahāmegho pavassittha, himagabbhā samantato;",
  "anya-e0703n18:150_0": "Mahābodhiṁ chādayiṁsu, sītalāni ghanāni ca.",
  "anya-e0703n18:151_0": "50.",
  "anya-e0703n18:152_0": "Sattāhāni mahābodhiṁ, tahiṁyeva adassanā;",
  "anya-e0703n18:153_0": "Himagabbhe sannisīdi, pasādajananī jane.",
  "anya-e0703n18:154_0": "51.",
  "anya-e0703n18:155_0": "Sattāhā tikkame meghā, sabbe apagamiṁsu te;",
  "anya-e0703n18:156_0": "Mahābodhi ca dissittha, chabbaṇṇā raṁsiyopi ca.",
  "anya-e0703n18:157_0": "52.",
  "anya-e0703n18:158_0": "Mahāmahindattheroca, saṅghamittā ca bhikkhunī;",
  "anya-e0703n18:159_0": "Tatthā’gañchuṁsaparisā, rājā saparisopi ca.",
  "anya-e0703n18:160_0": "53.",
  "anya-e0703n18:161_0": "Khattiyā kājaraggāme, candanaggāma khattiyā;",
  "anya-e0703n18:162_0": "Tivakka brāhmaṇo ceva, dīpavāsī janāpi ca.",
  "anya-e0703n18:163_0": "54.",
  "anya-e0703n18:164_0": "Devānubhāvenā’gañchuṁ, mahābodhi mahussukkā;",
  "anya-e0703n18:165_0": "Mahāsamāgame tasmiṁ, pāṭihāriyavimhite.",
  "anya-e0703n18:166_0": "55.",
  "anya-e0703n18:167_0": "Pakkaṁ pācinasākhāya, pekkhataṁ pakka’makkhataṁ;",
  "anya-e0703n18:168_0": "Thero patantamādāya, ropetuṁ rājino adā.",
  "anya-e0703n18:169_0": "56.",
  "anya-e0703n18:170_0": "Paṁsūnaṁ gandhamissānaṁ, puṇṇe soṇṇa kaṭāhake;",
  "anya-e0703n18:171_0": "Mahāsanassa ṭhāne taṁ, ṭhapitaṁ ropa’yissaro.",
  "anya-e0703n18:172_0": "57.",
  "anya-e0703n18:173_0": "Pekkhataṁyeva sabbesaṁ, uggantvā aṭṭha aṅkurā;",
  "anya-e0703n18:174_0": "Jāyiṁsu bodhitaruṇā, aṭṭhaṁsu catuhatthakā.",
  "anya-e0703n18:175_0": "58.",
  "anya-e0703n18:176_0": "Rājā te bodhitaruṇe, disvā vimhitamānaso;",
  "anya-e0703n18:177_0": "Setacchattena pūjesi, abhisekamadāsi ca.",
  "anya-e0703n18:178_0": "59.",
  "anya-e0703n18:179_0": "Patiṭṭhāpesi aṭṭhannaṁ, jambukolamhi paṭṭane;",
  "anya-e0703n18:180_0": "Mahābodhi ṭhita ṭhāne, nāvāyo rohane tadā.",
  "anya-e0703n18:181_0": "60.",
  "anya-e0703n18:182_0": "Tivakkabrāhmaṇagāme, thūpārāme tatheva ca;",
  "anya-e0703n18:183_0": "Issarasamaṇārāme, paṭhame cetiyaṅgaṇe.",
  "anya-e0703n18:184_0": "61.",
  "anya-e0703n18:185_0": "Cetiya pabbatā rāme, tathā kājaragāmake;",
  "anya-e0703n18:186_0": "Candanagāmake cāti, ekekaṁ bodhilaṭṭhikaṁ.",
  "anya-e0703n18:187_0": "62.",
  "anya-e0703n18:188_0": "Sesā catupakkajātā, dvattiṁsa bodhilaṭṭhiyo;",
  "anya-e0703n18:189_0": "Samantā yojanaṭhāne, vihāresu tahiṁ tahiṁ.",
  "anya-e0703n18:190_0": "63.",
  "anya-e0703n18:191_0": "Dīpāvāsī janasseva, hitatthāya patiṭṭhite;",
  "anya-e0703n18:192_0": "Mahābodhi dumindamhi, sammāsambuddha tejasā.",
  "anya-e0703n18:193_0": "64.",
  "anya-e0703n18:194_0": "Anulāsāsa parisā, saṅghamittāya theriyā;",
  "anya-e0703n18:195_0": "Santike pabbajitvāna, arahattamapāpuṇi.",
  "anya-e0703n18:196_0": "65.",
  "anya-e0703n18:197_0": "Ariṭṭho so pañcasata-parivāro ca khattiyo;",
  "anya-e0703n18:198_0": "Therantike pabbajitvā, arahattamapāpuṇi.",
  "anya-e0703n18:199_0": "66.",
  "anya-e0703n18:200_0": "Yāni seṭṭhikulāna’ṭṭha-mahābodhimidhāharuṁ;",
  "anya-e0703n18:201_0": "Bodhāharakulānīti, tāni tena pavuccare.",
  "anya-e0703n18:202_0": "67.",
  "anya-e0703n18:203_0": "Upāsikā vihāroti, ñāte bhikkhunupassaye;",
  "anya-e0703n18:204_0": "Sasaṅghā saṅghamittā sā, mahātherī tahiṁ vasi.",
  "anya-e0703n18:205_0": "68.",
  "anya-e0703n18:206_0": "Agārattayapāmokkhe , agāre tattha kārayi;",
  "anya-e0703n18:207_0": "Dvādasa tesu ekasmiṁ, mahāgāre ṭhapāpayi.",
  "anya-e0703n18:208_0": "69.",
  "anya-e0703n18:209_0": "Mahābodhisametāya, nāvāya kūpayaṭṭhikaṁ;",
  "anya-e0703n18:210_0": "Ekasmiṁ piya mekasmiṁ, arittaṁ tehi teviduṁ.",
  "anya-e0703n18:211_0": "70.",
  "anya-e0703n18:212_0": "Jāte aññanikāyepi, agārā dvādasāpi te;",
  "anya-e0703n18:213_0": "Hatthāḷaka bhikkhunīhi, vaḷañjayiṁsu sabbadā.",
  "anya-e0703n18:214_0": "71.",
  "anya-e0703n18:215_0": "Rañño maṅgalahatthi so, vicaranto yathāsukhaṁ;",
  "anya-e0703n18:216_0": "Purassa ekapassamhi, kandarantamhi sītale.",
  "anya-e0703n18:217_0": "72.",
  "anya-e0703n18:218_0": "Kadambapupphagumbante, aṭṭhāsi gocaraṁ caraṁ;",
  "anya-e0703n18:219_0": "Hatthiṁ tattharataṁ ñatvā, akaṁsu tattha āḷhakaṁ.",
  "anya-e0703n18:220_0": "73.",
  "anya-e0703n18:221_0": "Atheka divasaṁ hatthī, nagaṇhi kabaḷāni so;",
  "anya-e0703n18:222_0": "Dīpappasādakaṁ theraṁ, rājā so pucchitaṁ mataṁ.",
  "anya-e0703n18:223_0": "74.",
  "anya-e0703n18:224_0": "Kadambapupphagumbasmiṁ, thūpassa karaṇaṁ karī;",
  "anya-e0703n18:225_0": "Icchatīti mahāthero, mahārājassa abravi.",
  "anya-e0703n18:226_0": "75.",
  "anya-e0703n18:227_0": "Sadhātukaṁ tattha thūpaṁ, thūpassa gharameva ca;",
  "anya-e0703n18:228_0": "Khippaṁ rājā akāresi, niccaṁ janahiterato.",
  "anya-e0703n18:229_0": "76.",
  "anya-e0703n18:230_0": "Saṅghamittā mahātherī, suññāgārābhilāsinī;",
  "anya-e0703n18:231_0": "Ākiṇṇattā vihārassa, vussamānassa tassa sā.",
  "anya-e0703n18:232_0": "77.",
  "anya-e0703n18:233_0": "Vuddhatthinī sāsanassa, bhikkhunīnaṁ hitāya ca;",
  "anya-e0703n18:234_0": "Bhikkhunupassayaṁ aññaṁ, icchamānā vicakkhaṇā.",
  "anya-e0703n18:235_0": "78.",
  "anya-e0703n18:236_0": "Gantvā cetiyagehaṁ taṁ, pavivekasukhaṁ bhusaṁ;",
  "anya-e0703n18:237_0": "Divāvihāraṁ kappesi, vihārakusalā’malā.",
  "anya-e0703n18:238_0": "79.",
  "anya-e0703n18:239_0": "Theriyā vandanatthāya, rājā bhikkhunupassayaṁ;",
  "anya-e0703n18:240_0": "Gantvā tattha gataṁ sutvā, gantvāna tattha vandiya.",
  "anya-e0703n18:241_0": "80.",
  "anya-e0703n18:242_0": "Sammoditvā tāya saddhiṁ, tatthāgamanakāraṇaṁ;",
  "anya-e0703n18:243_0": "Tassā ñatvā adhippāyaṁ, adhippāya vidū vidū.",
  "anya-e0703n18:244_0": "81.",
  "anya-e0703n18:245_0": "Samantā thūpagehassa, rammaṁ bhikkhunupassayaṁ;",
  "anya-e0703n18:246_0": "Devānaṁpiyatisso so, mahārājā akārayi.",
  "anya-e0703n18:247_0": "82.",
  "anya-e0703n18:248_0": "Hatthāḷhakasamīpamhi , kato bhikkhunupassayo;",
  "anya-e0703n18:249_0": "Hatthāḷhakavihāroti, vissuto āsi tena so.",
  "anya-e0703n18:250_0": "83.",
  "anya-e0703n18:251_0": "Sumittā saṅghamittā sā, mahātherī mahāmatī;",
  "anya-e0703n18:252_0": "Tasmiñhi vāsaṁ kappesi, ramme bhikkhunupassaye.",
  "anya-e0703n18:253_0": "84.",
  "anya-e0703n18:254_0": "Evaṁ laṁkā lokahitaṁ sāsanavuddhiṁ;",
  "anya-e0703n18:255_0": "Saṁsodhento esa mahābodhi dumindo;",
  "anya-e0703n18:256_0": "Laṁkādīpe ramme mahāmeghavanasmiṁ,",
  "anya-e0703n18:257_0": "Aṭṭhā sīghaṁ kālamanekabbhūtayuttoti.",
  "anya-e0703n18:258_0": "Sujanappasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n18:259_0": "Bodhiāgamano nāma",
  "anya-e0703n18:260_0": "Ekūnavīsatimo paricchedo."
}