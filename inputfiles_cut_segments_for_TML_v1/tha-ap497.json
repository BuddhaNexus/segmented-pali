{
  "tha-ap497:0.1_0": "Therāpadāna",
  "tha-ap497:0.2_0": "Kiṅkaṇipupphavagga",
  "tha-ap497:0.3_0": "5. Upaḍḍhadussadāyakattheraapadāna",
  "tha-ap497:1.1_0": "“Padumuttarabhagavato,",
  "tha-ap497:1.2_0": "sujāto nāma sāvako;",
  "tha-ap497:1.3_0": "Paṁsukūlaṁ gavesanto,",
  "tha-ap497:1.4_0": "saṅkāre carate tadā.",
  "tha-ap497:2.1_0": "Nagare haṁsavatiyā,",
  "tha-ap497:2.2_0": "paresaṁ bhatako ahaṁ;",
  "tha-ap497:2.3_0": "Upaḍḍhadussaṁ datvāna,",
  "tha-ap497:2.4_0": "sirasā abhivādayiṁ.",
  "tha-ap497:3.1_0": "Tena kammena sukatena,",
  "tha-ap497:3.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap497:3.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap497:3.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap497:4.1_0": "Tettiṁsakkhattuṁ devindo,",
  "tha-ap497:4.2_0": "devarajjamakārayiṁ;",
  "tha-ap497:4.3_0": "Sattasattatikkhattuñca,",
  "tha-ap497:4.4_0": "cakkavattī ahosahaṁ.",
  "tha-ap497:5.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap497:5.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap497:5.3_0": "Upaḍḍhadussadānena,",
  "tha-ap497:5.4_0": "modāmi akutobhayo.",
  "tha-ap497:6.1_0": "Icchamāno cahaṁ ajja,",
  "tha-ap497:6.2_0": "sakānanaṁ sapabbataṁ;",
  "tha-ap497:6.3_0": "Khomadussehi chādeyyaṁ,",
  "tha-ap497:6.4_0": "aḍḍhadussassidaṁ phalaṁ.",
  "tha-ap497:7.1_0": "Satasahassito kappe,",
  "tha-ap497:7.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap497:7.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap497:7.4_0": "aḍḍhadussassidaṁ phalaṁ.",
  "tha-ap497:8.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap497:8.2_0": "…pe…",
  "tha-ap497:8.3_0": "viharāmi anāsavo.",
  "tha-ap497:9.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap497:9.2_0": "…pe…",
  "tha-ap497:9.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap497:10.1_0": "Paṭisambhidā catasso,",
  "tha-ap497:10.2_0": "…pe…",
  "tha-ap497:10.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap497:11.1_0": "Itthaṁ sudaṁ āyasmā upaḍḍhadussadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap497:12.1_0": "Upaḍḍhadussadāyakattherassāpadānaṁ pañcamaṁ."
}