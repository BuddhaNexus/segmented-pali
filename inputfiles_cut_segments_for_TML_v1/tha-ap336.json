{
  "tha-ap336:0.1_0": "Therāpadāna",
  "tha-ap336:0.2_0": "Gandhodakavagga",
  "tha-ap336:0.3_0": "4. Ekadussadāyakattheraapadāna",
  "tha-ap336:1.1_0": "“Nagare haṁsavatiyā,",
  "tha-ap336:1.2_0": "ahosiṁ tiṇahārako;",
  "tha-ap336:1.3_0": "Tiṇahārena jīvāmi,",
  "tha-ap336:1.4_0": "tena posemi dārake.",
  "tha-ap336:2.1_0": "Padumuttaro nāma jino,",
  "tha-ap336:2.2_0": "sabbadhammāna pāragū;",
  "tha-ap336:2.3_0": "Tamandhakāraṁ nāsetvā,",
  "tha-ap336:2.4_0": "uppajji lokanāyako.",
  "tha-ap336:3.1_0": "Sake ghare nisīditvā,",
  "tha-ap336:3.2_0": "evaṁ cintesahaṁ tadā;",
  "tha-ap336:3.3_0": "‘Buddho loke samuppanno,",
  "tha-ap336:3.4_0": "deyyadhammo ca natthi me.",
  "tha-ap336:4.1_0": "Idaṁ me sāṭakaṁ ekaṁ,",
  "tha-ap336:4.2_0": "natthi me koci dāyako;",
  "tha-ap336:4.3_0": "Dukkho nirayasamphasso,",
  "tha-ap336:4.4_0": "ropayissāmi dakkhiṇaṁ’.",
  "tha-ap336:5.1_0": "Evāhaṁ cintayitvāna,",
  "tha-ap336:5.2_0": "sakaṁ cittaṁ pasādayiṁ;",
  "tha-ap336:5.3_0": "Ekaṁ dussaṁ gahetvāna,",
  "tha-ap336:5.4_0": "buddhaseṭṭhassadāsahaṁ.",
  "tha-ap336:6.1_0": "Ekaṁ dussaṁ daditvāna,",
  "tha-ap336:6.2_0": "ukkuṭṭhiṁ sampavattayiṁ;",
  "tha-ap336:6.3_0": "Yadi buddho tuvaṁ vīra,",
  "tha-ap336:6.4_0": "tārehi maṁ mahāmuni.",
  "tha-ap336:7.1_0": "Padumuttaro lokavidū,",
  "tha-ap336:7.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap336:7.3_0": "Mama dānaṁ pakittento,",
  "tha-ap336:7.4_0": "akā me anumodanaṁ.",
  "tha-ap336:8.1_0": "‘Iminā ekadussena,",
  "tha-ap336:8.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap336:8.3_0": "Kappasatasahassāni,",
  "tha-ap336:8.4_0": "vinipātaṁ na gacchati.",
  "tha-ap336:9.1_0": "Chattiṁsakkhattuṁ devindo,",
  "tha-ap336:9.2_0": "devarajjaṁ karissati;",
  "tha-ap336:9.3_0": "Tettiṁsakkhattuṁ rājā ca,",
  "tha-ap336:9.4_0": "cakkavattī bhavissati;",
  "tha-ap336:9.5_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap336:9.6_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap336:10.1_0": "Devaloke manusse vā,",
  "tha-ap336:10.2_0": "saṁsaranto tuvaṁ bhave;",
  "tha-ap336:10.3_0": "Rūpavā guṇasampanno,",
  "tha-ap336:10.4_0": "anavakkantadehavā;",
  "tha-ap336:10.5_0": "Akkhobhaṁ amitaṁ dussaṁ,",
  "tha-ap336:10.6_0": "labhissati yadicchakaṁ’.",
  "tha-ap336:11.1_0": "Idaṁ vatvāna sambuddho,",
  "tha-ap336:11.2_0": "jalajuttamanāmako;",
  "tha-ap336:11.3_0": "Nabhaṁ abbhuggamī dhīro,",
  "tha-ap336:11.4_0": "haṁsarājāva ambare.",
  "tha-ap336:12.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap336:12.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap336:12.3_0": "Bhoge me ūnatā natthi,",
  "tha-ap336:12.4_0": "ekadussassidaṁ phalaṁ.",
  "tha-ap336:13.1_0": "Paduddhāre paduddhāre,",
  "tha-ap336:13.2_0": "dussaṁ nibbattate mamaṁ;",
  "tha-ap336:13.3_0": "Heṭṭhā dussamhi tiṭṭhāmi,",
  "tha-ap336:13.4_0": "upari chadanaṁ mama.",
  "tha-ap336:14.1_0": "Cakkavāḷamupādāya,",
  "tha-ap336:14.2_0": "sakānanaṁ sapabbataṁ;",
  "tha-ap336:14.3_0": "Icchamāno cahaṁ ajja,",
  "tha-ap336:14.4_0": "dussehi chādayeyyahaṁ.",
  "tha-ap336:15.1_0": "Teneva ekadussena,",
  "tha-ap336:15.2_0": "saṁsaranto bhavābhave;",
  "tha-ap336:15.3_0": "Suvaṇṇavaṇṇo hutvāna,",
  "tha-ap336:15.4_0": "saṁsarāmi bhavābhave.",
  "tha-ap336:16.1_0": "Vipākaṁ ekadussassa,",
  "tha-ap336:16.2_0": "najjhagaṁ katthacikkhayaṁ;",
  "tha-ap336:16.3_0": "Ayaṁ me antimā jāti,",
  "tha-ap336:16.4_0": "vipaccati idhāpi me.",
  "tha-ap336:17.1_0": "Satasahassito kappe,",
  "tha-ap336:17.2_0": "yaṁ dussamadadiṁ tadā;",
  "tha-ap336:17.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap336:17.4_0": "ekadussassidaṁ phalaṁ.",
  "tha-ap336:18.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap336:18.2_0": "bhavā sabbe samūhatā;",
  "tha-ap336:18.3_0": "Nāgova bandhanaṁ chetvā,",
  "tha-ap336:18.4_0": "viharāmi anāsavo.",
  "tha-ap336:19.1_0": "Paṭisambhidā catasso,",
  "tha-ap336:19.2_0": "…pe…",
  "tha-ap336:19.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap336:20.1_0": "Itthaṁ sudaṁ āyasmā ekadussadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap336:21.1_0": "Ekadussadāyakattherassāpadānaṁ catutthaṁ."
}