{
  "tha-ap409:0.1_0": "Therāpadāna",
  "tha-ap409:0.2_0": "Metteyyavagga",
  "tha-ap409:0.3_0": "7. Hemakattheraapadāna",
  "tha-ap409:1.1_0": "“Pabbhārakūṭaṁ nissāya,",
  "tha-ap409:1.2_0": "anomo nāma tāpaso;",
  "tha-ap409:1.3_0": "Assamaṁ sukataṁ katvā,",
  "tha-ap409:1.4_0": "paṇṇasāle vasī tadā.",
  "tha-ap409:2.1_0": "Siddhaṁ tassa tapo kammaṁ,",
  "tha-ap409:2.2_0": "siddhipatto sake bale;",
  "tha-ap409:2.3_0": "Sakasāmaññavikkanto,",
  "tha-ap409:2.4_0": "ātāpī nipako muni.",
  "tha-ap409:3.1_0": "Visārado sasamaye,",
  "tha-ap409:3.2_0": "paravāde ca kovido;",
  "tha-ap409:3.3_0": "Paṭṭho bhūmantalikkhamhi,",
  "tha-ap409:3.4_0": "uppātamhi ca kovido.",
  "tha-ap409:4.1_0": "Vītasoko nirārambho,",
  "tha-ap409:4.2_0": "appāhāro alolupo;",
  "tha-ap409:4.3_0": "Lābhālābhena santuṭṭho,",
  "tha-ap409:4.4_0": "jhāyī jhānarato muni.",
  "tha-ap409:5.1_0": "Piyadassī nāma sambuddho,",
  "tha-ap409:5.2_0": "aggo kāruṇiko muni;",
  "tha-ap409:5.3_0": "Satte tāretukāmo so,",
  "tha-ap409:5.4_0": "karuṇāya pharī tadā.",
  "tha-ap409:6.1_0": "Bodhaneyyaṁ janaṁ disvā,",
  "tha-ap409:6.2_0": "piyadassī mahāmuni;",
  "tha-ap409:6.3_0": "Cakkavāḷasahassampi,",
  "tha-ap409:6.4_0": "gantvā ovadate muni.",
  "tha-ap409:7.1_0": "Mamuddharitukāmo so,",
  "tha-ap409:7.2_0": "mamassamamupāgami;",
  "tha-ap409:7.3_0": "Na diṭṭho me jino pubbe,",
  "tha-ap409:7.4_0": "na sutopi ca kassaci.",
  "tha-ap409:8.1_0": "Uppātā supinā mayhaṁ,",
  "tha-ap409:8.2_0": "lakkhaṇā suppakāsitā;",
  "tha-ap409:8.3_0": "Paṭṭho bhūmantalikkhamhi,",
  "tha-ap409:8.4_0": "nakkhattapadakovido.",
  "tha-ap409:9.1_0": "Sohaṁ buddhassa sutvāna,",
  "tha-ap409:9.2_0": "tattha cittaṁ pasādayiṁ;",
  "tha-ap409:9.3_0": "Tiṭṭhanto vā nisinno vā,",
  "tha-ap409:9.4_0": "sarāmi niccakālikaṁ.",
  "tha-ap409:10.1_0": "Mayi evaṁ sarantamhi,",
  "tha-ap409:10.2_0": "bhagavāpi anussari;",
  "tha-ap409:10.3_0": "Buddhaṁ anussarantassa,",
  "tha-ap409:10.4_0": "pīti me hoti tāvade.",
  "tha-ap409:11.1_0": "Kālañca punarāgamma,",
  "tha-ap409:11.2_0": "upesi maṁ mahāmuni;",
  "tha-ap409:11.3_0": "Sampattepi na jānāmi,",
  "tha-ap409:11.4_0": "ayaṁ buddho mahāmuni.",
  "tha-ap409:12.1_0": "Anukampako kāruṇiko,",
  "tha-ap409:12.2_0": "piyadassī mahāmuni;",
  "tha-ap409:12.3_0": "Sañjānāpesi attānaṁ,",
  "tha-ap409:12.4_0": "‘ahaṁ buddho sadevake’.",
  "tha-ap409:13.1_0": "Sañjānitvāna sambuddhaṁ,",
  "tha-ap409:13.2_0": "piyadassiṁ mahāmuniṁ;",
  "tha-ap409:13.3_0": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap409:13.4_0": "idaṁ vacanamabraviṁ.",
  "tha-ap409:14.1_0": "‘Aññe pīṭhe ca pallaṅke,",
  "tha-ap409:14.2_0": "āsandīsu nisīdare;",
  "tha-ap409:14.3_0": "Tuvampi sabbadassāvī,",
  "tha-ap409:14.4_0": "nisīda ratanāsane’.",
  "tha-ap409:15.1_0": "Sabbaratanamayaṁ pīṭhaṁ,",
  "tha-ap409:15.2_0": "nimminitvāna tāvade;",
  "tha-ap409:15.3_0": "Piyadassissa munino,",
  "tha-ap409:15.4_0": "adāsiṁ iddhinimmitaṁ.",
  "tha-ap409:16.1_0": "Ratane ca nisinnassa,",
  "tha-ap409:16.2_0": "pīṭhake iddhinimmite;",
  "tha-ap409:16.3_0": "Kumbhamattaṁ jambuphalaṁ,",
  "tha-ap409:16.4_0": "adāsiṁ tāvade ahaṁ.",
  "tha-ap409:17.1_0": "Mama hāsaṁ janetvāna,",
  "tha-ap409:17.2_0": "paribhuñji mahāmuni;",
  "tha-ap409:17.3_0": "Tadā cittaṁ pasādetvā,",
  "tha-ap409:17.4_0": "satthāraṁ abhivādayiṁ.",
  "tha-ap409:18.1_0": "Piyadassī tu bhagavā,",
  "tha-ap409:18.2_0": "lokajeṭṭho narāsabho;",
  "tha-ap409:18.3_0": "Ratanāsanamāsīno,",
  "tha-ap409:18.4_0": "imā gāthā abhāsatha.",
  "tha-ap409:19.1_0": "‘Yo me ratanamayaṁ pīṭhaṁ,",
  "tha-ap409:19.2_0": "amatañca phalaṁ adā;",
  "tha-ap409:19.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap409:19.4_0": "suṇātha mama bhāsato.",
  "tha-ap409:20.1_0": "Sattasattati kappāni,",
  "tha-ap409:20.2_0": "devaloke ramissati;",
  "tha-ap409:20.3_0": "Pañcasattatikkhattuñca,",
  "tha-ap409:20.4_0": "cakkavattī bhavissati.",
  "tha-ap409:21.1_0": "Dvattiṁsakkhattuṁ devindo,",
  "tha-ap409:21.2_0": "devarajjaṁ karissati;",
  "tha-ap409:21.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap409:21.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap409:22.1_0": "Soṇṇamayaṁ rūpimayaṁ,",
  "tha-ap409:22.2_0": "pallaṅkaṁ sukataṁ bahuṁ;",
  "tha-ap409:22.3_0": "Lohitaṅgamayañceva,",
  "tha-ap409:22.4_0": "lacchati ratanāmayaṁ.",
  "tha-ap409:23.1_0": "Caṅkamantampi manujaṁ,",
  "tha-ap409:23.2_0": "puññakammasamaṅginaṁ;",
  "tha-ap409:23.3_0": "Pallaṅkāni anekāni,",
  "tha-ap409:23.4_0": "parivāressare tadā.",
  "tha-ap409:24.1_0": "Kūṭāgārā ca pāsādā,",
  "tha-ap409:24.2_0": "sayanañca mahārahaṁ;",
  "tha-ap409:24.3_0": "Imassa cittamaññāya,",
  "tha-ap409:24.4_0": "nibbattissanti tāvade.",
  "tha-ap409:25.1_0": "Saṭṭhi nāgasahassāni,",
  "tha-ap409:25.2_0": "sabbālaṅkārabhūsitā;",
  "tha-ap409:25.3_0": "Suvaṇṇakacchā mātaṅgā,",
  "tha-ap409:25.4_0": "hemakappanavāsasā.",
  "tha-ap409:26.1_0": "Ārūḷhā gāmaṇīyehi,",
  "tha-ap409:26.2_0": "tomaraṅkusapāṇibhi;",
  "tha-ap409:26.3_0": "Imaṁ paricarissanti,",
  "tha-ap409:26.4_0": "ratnapīṭhassidaṁ phalaṁ.",
  "tha-ap409:27.1_0": "Saṭṭhi assasahassāni,",
  "tha-ap409:27.2_0": "sabbālaṅkārabhūsitā;",
  "tha-ap409:27.3_0": "Ājānīyāva jātiyā,",
  "tha-ap409:27.4_0": "sindhavā sīghavāhino.",
  "tha-ap409:28.1_0": "Ārūḷhā gāmaṇīyehi,",
  "tha-ap409:28.2_0": "illiyācāpadhāribhi;",
  "tha-ap409:28.3_0": "Tepimaṁ paricarissanti,",
  "tha-ap409:28.4_0": "ratnapīṭhassidaṁ phalaṁ.",
  "tha-ap409:29.1_0": "Saṭṭhi rathasahassāni,",
  "tha-ap409:29.2_0": "sabbālaṅkārabhūsitā;",
  "tha-ap409:29.3_0": "Dīpā athopi veyagghā,",
  "tha-ap409:29.4_0": "sannaddhā ussitaddhajā.",
  "tha-ap409:30.1_0": "Ārūḷhā gāmaṇīyehi,",
  "tha-ap409:30.2_0": "cāpahatthehi vammibhi;",
  "tha-ap409:30.3_0": "Parivāressantimaṁ niccaṁ,",
  "tha-ap409:30.4_0": "ratnapīṭhassidaṁ phalaṁ.",
  "tha-ap409:31.1_0": "Saṭṭhi dhenusahassāni,",
  "tha-ap409:31.2_0": "dohaññā puṅgavūsabhe;",
  "tha-ap409:31.3_0": "Vacchake janayissanti,",
  "tha-ap409:31.4_0": "ratnapīṭhassidaṁ phalaṁ.",
  "tha-ap409:32.1_0": "Soḷasitthisahassāni,",
  "tha-ap409:32.2_0": "sabbālaṅkārabhūsitā;",
  "tha-ap409:32.3_0": "Vicittavatthābharaṇā,",
  "tha-ap409:32.4_0": "āmukkamaṇikuṇḍalā.",
  "tha-ap409:33.1_0": "Aḷārapamhā hasulā,",
  "tha-ap409:33.2_0": "susaññā tanumajjhimā;",
  "tha-ap409:33.3_0": "Parivāressantimaṁ niccaṁ,",
  "tha-ap409:33.4_0": "ratnapīṭhassidaṁ phalaṁ.",
  "tha-ap409:34.1_0": "Aṭṭhārase kappasate,",
  "tha-ap409:34.2_0": "gotamo nāma cakkhumā;",
  "tha-ap409:34.3_0": "Tamandhakāraṁ vidhamitvā,",
  "tha-ap409:34.4_0": "buddho loke bhavissati.",
  "tha-ap409:35.1_0": "Tassa dassanamāgamma,",
  "tha-ap409:35.2_0": "pabbajissatikiñcano;",
  "tha-ap409:35.3_0": "Tosayitvāna satthāraṁ,",
  "tha-ap409:35.4_0": "sāsanebhiramissati.",
  "tha-ap409:36.1_0": "Tassa dhammaṁ suṇitvāna,",
  "tha-ap409:36.2_0": "kilese ghātayissati;",
  "tha-ap409:36.3_0": "Sabbāsave pariññāya,",
  "tha-ap409:36.4_0": "nibbāyissatināsavo’.",
  "tha-ap409:37.1_0": "Vīriyaṁ me dhuradhorayhaṁ,",
  "tha-ap409:37.2_0": "yogakkhemādhivāhanaṁ;",
  "tha-ap409:37.3_0": "Uttamatthaṁ patthayanto,",
  "tha-ap409:37.4_0": "sāsane viharāmahaṁ.",
  "tha-ap409:38.1_0": "Idaṁ pacchimakaṁ mayhaṁ,",
  "tha-ap409:38.2_0": "carimo vattate bhavo;",
  "tha-ap409:38.3_0": "Sabbāsavā parikkhīṇā,",
  "tha-ap409:38.4_0": "natthi dāni punabbhavo.",
  "tha-ap409:39.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap409:39.2_0": "…pe…",
  "tha-ap409:39.3_0": "viharāmi anāsavo.",
  "tha-ap409:40.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap409:40.2_0": "…pe…",
  "tha-ap409:40.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap409:41.1_0": "Paṭisambhidā catasso,",
  "tha-ap409:41.2_0": "…pe…",
  "tha-ap409:41.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap409:42.1_0": "Itthaṁ sudaṁ āyasmā hemako thero imā gāthāyo abhāsitthāti.",
  "tha-ap409:43.1_0": "Hemakattherassāpadānaṁ sattamaṁ.",
  "tha-ap409:43.2_0": "Sattarasamaṁ bhāṇavāraṁ."
}