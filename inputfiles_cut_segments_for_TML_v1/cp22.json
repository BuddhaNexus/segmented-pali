{
  "cp22:0.1_0": "Cariyāpiṭaka",
  "cp22:0.2_0": "Yudhañjayavagga",
  "cp22:0.3_0": "Nekkhammapāramī 2",
  "cp22:0.4_0": "Somanassacariya",
  "cp22:1.1_0": "“Punāparaṁ yadā homi,",
  "cp22:1.2_0": "indapatthe puruttame;",
  "cp22:1.3_0": "Kāmito dayito putto,",
  "cp22:1.4_0": "somanassoti vissuto.",
  "cp22:2.1_0": "Sīlavā guṇasampanno,",
  "cp22:2.2_0": "kalyāṇapaṭibhānavā;",
  "cp22:2.3_0": "Vuḍḍhāpacāyī hirīmā,",
  "cp22:2.4_0": "saṅgahesu ca kovido.",
  "cp22:3.1_0": "Tassa rañño patikaro,",
  "cp22:3.2_0": "ahosi kuhakatāpaso;",
  "cp22:3.3_0": "Ārāmaṁ mālāvacchañca,",
  "cp22:3.4_0": "ropayitvāna jīvati.",
  "cp22:4.1_0": "Tamahaṁ disvāna kuhakaṁ,",
  "cp22:4.2_0": "thusarāsiṁva ataṇḍulaṁ;",
  "cp22:4.3_0": "Dumaṁva anto susiraṁ,",
  "cp22:4.4_0": "kadaliṁva asārakaṁ.",
  "cp22:5.1_0": "Natthimassa sataṁ dhammo,",
  "cp22:5.2_0": "sāmaññāpagato ayaṁ;",
  "cp22:5.3_0": "Hirīsukkadhammajahito,",
  "cp22:5.4_0": "jīvitavuttikāraṇā.",
  "cp22:6.1_0": "Kupito ahu paccanto,",
  "cp22:6.2_0": "aṭavīhi parantihi;",
  "cp22:6.3_0": "Taṁ nisedhetuṁ gacchanto,",
  "cp22:6.4_0": "anusāsi pitā mamaṁ.",
  "cp22:7.1_0": "‘Mā pamajji tuvaṁ tāta,",
  "cp22:7.2_0": "jaṭilaṁ uggatāpanaṁ;",
  "cp22:7.3_0": "Yadicchakaṁ pavattehi,",
  "cp22:7.4_0": "sabbakāmadado hi so’.",
  "cp22:8.1_0": "Tamahaṁ gantvānupaṭṭhānaṁ,",
  "cp22:8.2_0": "Idaṁ vacanamabraviṁ;",
  "cp22:8.3_0": "‘Kacci te gahapati kusalaṁ,",
  "cp22:8.4_0": "Kiṁ vā te āharīyatu’.",
  "cp22:9.1_0": "Tena so kupito āsi,",
  "cp22:9.2_0": "kuhako mānanissito;",
  "cp22:9.3_0": "‘Ghātāpemi tuvaṁ ajja,",
  "cp22:9.4_0": "raṭṭhā pabbājayāmi vā’.",
  "cp22:10.1_0": "Nisedhayitvā paccantaṁ,",
  "cp22:10.2_0": "rājā kuhakamabravi;",
  "cp22:10.3_0": "‘Kacci te bhante khamanīyaṁ,",
  "cp22:10.4_0": "sammāno te pavattito’.",
  "cp22:11.1_0": "Tassa ācikkhatī pāpo,",
  "cp22:11.2_0": "kumāro yathā nāsiyo;",
  "cp22:11.3_0": "Tassa taṁ vacanaṁ sutvā,",
  "cp22:11.4_0": "āṇāpesi mahīpati.",
  "cp22:12.1_0": "‘Sīsaṁ tattheva chinditvā,",
  "cp22:12.2_0": "katvāna catukhaṇḍikaṁ;",
  "cp22:12.3_0": "Rathiyā rathiyaṁ dassetha,",
  "cp22:12.4_0": "sā gati jaṭilahīḷitā’.",
  "cp22:13.1_0": "Tattha kāraṇikā gantvā,",
  "cp22:13.2_0": "caṇḍā luddā akāruṇā;",
  "cp22:13.3_0": "Mātu aṅke nisinnassa,",
  "cp22:13.4_0": "ākaḍḍhitvā nayanti maṁ.",
  "cp22:14.1_0": "Tesāhaṁ evamavacaṁ,",
  "cp22:14.2_0": "bandhataṁ gāḷhabandhanaṁ;",
  "cp22:14.3_0": "‘Rañño dassetha maṁ khippaṁ,",
  "cp22:14.4_0": "rājakiriyāni atthi me’.",
  "cp22:15.1_0": "Te maṁ rañño dassayiṁsu,",
  "cp22:15.2_0": "pāpassa pāpasevino;",
  "cp22:15.3_0": "Disvāna taṁ saññāpesiṁ,",
  "cp22:15.4_0": "mamañca vasamānayiṁ.",
  "cp22:16.1_0": "So maṁ tattha khamāpesi,",
  "cp22:16.2_0": "mahārajjamadāsi me;",
  "cp22:16.3_0": "Sohaṁ tamaṁ dālayitvā,",
  "cp22:16.4_0": "pabbajiṁ anagāriyaṁ.",
  "cp22:17.1_0": "Na me dessaṁ mahārajjaṁ,",
  "cp22:17.2_0": "kāmabhogo na dessiyo;",
  "cp22:17.3_0": "Sabbaññutaṁ piyaṁ mayhaṁ,",
  "cp22:17.4_0": "tasmā rajjaṁ pariccajin”ti.",
  "cp22:18.1_0": "Somanassacariyaṁ dutiyaṁ."
}