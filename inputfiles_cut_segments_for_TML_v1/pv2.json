{
  "pv2:0.1_0": "Petavatthu",
  "pv2:0.2_0": "Uragavagga",
  "pv2:0.3_0": "2. Sūkaramukhapetavatthu",
  "pv2:1.1_0": "“Kāyo te sabbasovaṇṇo,",
  "pv2:1.2_0": "sabbā obhāsate disā;",
  "pv2:1.3_0": "Mukhaṁ te sūkarasseva,",
  "pv2:1.4_0": "kiṁ kammamakarī pure”.",
  "pv2:2.1_0": "“Kāyena saññato āsiṁ,",
  "pv2:2.2_0": "vācāyāsimasaññato;",
  "pv2:2.3_0": "Tena metādiso vaṇṇo,",
  "pv2:2.4_0": "yathā passasi nārada.",
  "pv2:3.1_0": "Taṁ tyāhaṁ nārada brūmi,",
  "pv2:3.2_0": "Sāmaṁ diṭṭhamidaṁ tayā;",
  "pv2:3.3_0": "Mākāsi mukhasā pāpaṁ,",
  "pv2:3.4_0": "Mā kho sūkaramukho ahū”ti.",
  "pv2:4.1_0": "Sūkaramukhapetavatthu dutiyaṁ."
}