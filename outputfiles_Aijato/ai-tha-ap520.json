{
    "ai-tha-ap520:0.1_0": "Therāpadāna",
    "ai-tha-ap520:0.2_0": "Phaladāyakavagga",
    "ai-tha-ap520:0.3_0": "8. Ghosasaññakattheraapadāna",
    "ai-tha-ap520:1.1_0": "I used to be in a sorry state.",
    "ai-tha-ap520:1.2_0": "I’ve conquered the wilderness,",
    "ai-tha-ap520:1.3_0": "I saw the stainless Buddha",
    "ai-tha-ap520:1.4_0": "by the assembly of gods,",
    "ai-tha-ap520:2.1_0": "they reveal it really do,",
    "ai-tha-ap520:2.2_0": "teaching the deathless state:",
    "ai-tha-ap520:2.3_0": "When you heard the teaching,",
    "ai-tha-ap520:2.4_0": "you’ll follow the world,",
    "ai-tha-ap520:3.1_0": "confidence in heart,",
    "ai-tha-ap520:3.2_0": "unrivaled, unequaled,",
    "ai-tha-ap520:3.3_0": "filling my mind with confidence in him,",
    "ai-tha-ap520:3.4_0": "grueling more than that.",
    "ai-tha-ap520:4.1_0": "It’s been thirty one eons",
    "ai-tha-ap520:4.2_0": "since I gained that perception;",
    "ai-tha-ap520:4.3_0": "I’m not aware of any bad places",
    "ai-tha-ap520:4.4_0": "they wished for the perception of their own fruit.",
    "ai-tha-ap520:5.1_0": "My defilements have been burnt away by practicing absorption—",
    "ai-tha-ap520:5.2_0": "... “I attained the noble ones,” ...",
    "ai-tha-ap520:5.3_0": "and live without defilements.",
    "ai-tha-ap520:6.1_0": "It was truly for me",
    "ai-tha-ap520:6.2_0": "... “I attained the noble ones,” ...",
    "ai-tha-ap520:6.3_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap520:7.1_0": "Attaining the four kinds of textual analysis",
    "ai-tha-ap520:7.2_0": "... “I attained the noble ones,” ...",
    "ai-tha-ap520:7.3_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap520:8.1_0": "That is how these verses were recited by the senior venerable Jhoṭiya.",
    "ai-tha-ap520:9.1_0": "The eighth section for recitation on the senior monks"
}