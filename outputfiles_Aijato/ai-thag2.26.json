{
    "ai-thag2.26:0.1_0": "Verses of the Senior Monks",
    "ai-thag2.26:0.2_0": "The Book of the Twos",
    "ai-thag2.26:0.3_0": "Chapter Three",
    "ai-thag2.26:0.4_0": "2.26. Puṇṇamāsa (2nd)",
    "ai-thag2.26:1.1_0": "I gave up the five hindrances",
    "ai-thag2.26:1.2_0": "for the sake of finding sanctuary.",
    "ai-thag2.26:1.3_0": "I took Dhamma as a mirror",
    "ai-thag2.26:1.4_0": "for knowing and seeing myself.",
    "ai-thag2.26:2.1_0": "I examined my body",
    "ai-thag2.26:2.2_0": "all of it, inside and out.",
    "ai-thag2.26:2.3_0": "whether pleasure or pain",
    "ai-thag2.26:2.4_0": "my body appeared hollow.",
    "ai-thag2.26:2.5_0": "... who are elderly and senior,"
}