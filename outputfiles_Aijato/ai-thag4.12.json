{
    "thag4.12:0.1_0": "Second:",
    "thag4.12:0.2_0": "The Book of the Fours",
    "thag4.12:0.3_0": "First",
    "thag4.12:0.4_0": "this is the point.",
    "thag4.12:1.1_0": "“I went forth out of faith",
    "thag4.12:1.2_0": "But I embraced faith",
    "thag4.12:1.3_0": "after receiving full ordination.",
    "thag4.12:1.4_0": "I strove, strong in effort:",
    "thag4.12:2.1_0": "gladly, let this body be broken!",
    "thag4.12:2.2_0": "Let this lump of meat be dissolved!",
    "thag4.12:2.3_0": "Let both my legs fall off",
    "thag4.12:2.4_0": "at the knees!",
    "thag4.12:3.1_0": "I won’t eat, I won’t drink,",
    "thag4.12:3.2_0": "I won’t leave my dwelling,",
    "thag4.12:3.3_0": "nor will I lie down on my side,",
    "thag4.12:3.4_0": "until the dart of craving was pulled out.",
    "thag4.12:4.1_0": "See my energy and vigor",
    "thag4.12:4.2_0": "as I meditate like this!",
    "thag4.12:4.3_0": "I attained the three knowledges",
    "thag4.12:4.4_0": "having fulfilled the Buddha’s instructions.",
    "thag4.12:4.6_0": "the senior monk,",
    "thag4.12:4.7_0": "The Book of the Fours is finished.",
    "thag4.12:5.0_0": "The account of the thirty-six streams",
    "thag4.12:5.1_0": "and Abhaya, too,",
    "thag4.12:5.2_0": "Nandaka,",
    "thag4.12:5.3_0": "Jambuka, O chata,",
    "thag4.12:5.4_0": "impressive, too,",
    "thag4.12:6.1_0": "The senior monk who was born,",
    "thag4.12:6.2_0": "of the Buddha’s disciples,",
    "thag4.12:6.3_0": "A senior monk who was legitimate,",
    "thag4.12:6.4_0": "Three times and Thirty.",
    "thag4.12:6.5_0": "Two verses and wisdom",
    "thag4.12:6.6_0": "They all senior monks, too,"
}