{
    "ai-pv4:0.1_0": "Petavatthu",
    "ai-pv4:0.2_0": "Uragavagga",
    "ai-pv4:0.3_0": "4. Piṭṭhadhītalikapetavatthu",
    "ai-pv4:1.1_0": "“Whatever fame does the basis",
    "ai-pv4:1.2_0": "give gifts and stingy,",
    "ai-pv4:1.3_0": "Has converted about the past,",
    "ai-pv4:1.4_0": "Or elsewhere, in the midst of the Sangha.",
    "ai-pv4:2.1_0": "Four Great Kings,",
    "ai-pv4:2.2_0": "glorious, the glorious world,",
    "ai-pv4:2.3_0": "Kuvera and Shut,",
    "ai-pv4:2.4_0": "the western quarter,",
    "ai-pv4:2.5_0": "and those worthy of honor,",
    "ai-pv4:2.6_0": "it will not be fruitless for the donor.”",
    "ai-pv4:3.1_0": "For neither tears nor grief",
    "ai-pv4:3.2_0": "or other lamentations",
    "ai-pv4:3.3_0": "It’s not for those who benefit",
    "ai-pv4:3.4_0": "so long as their relatives stay like this.",
    "ai-pv4:4.1_0": "This offering that has been given,",
    "ai-pv4:4.2_0": "well placed in the Saṅgha,",
    "ai-pv4:4.3_0": "For a long time",
    "ai-pv4:4.4_0": "and aids them right away.”",
    "ai-pv4:5.1_0": "a fourth ground."
}