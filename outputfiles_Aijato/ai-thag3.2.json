{
    "thag3.2:0.1_0": "Second:",
    "thag3.2:0.2_0": "The Book of the Threes",
    "thag3.2:0.3_0": "First",
    "thag3.2:0.4_0": "Vāsava was someone else’s kin.",
    "thag3.2:1.1_0": "I went forth five days ago,",
    "thag3.2:1.2_0": "my heart’s desire is still unfulfilled.",
    "thag3.2:1.3_0": "I entered my dwelling",
    "thag3.2:1.4_0": "and resolved in my heart:",
    "thag3.2:2.1_0": "I won’t eat, I won’t drink,",
    "thag3.2:2.2_0": "I won’t leave my dwelling;",
    "thag3.2:2.3_0": "nor will I lie down on my side,",
    "thag3.2:2.4_0": "until the dart of craving was pulled out.",
    "thag3.2:3.1_0": "See my energy and vigor",
    "thag3.2:3.2_0": "as I meditate like this!",
    "thag3.2:3.3_0": "I attained the three knowledges",
    "thag3.2:3.4_0": "having fulfilled the Buddha’s instructions.",
    "thag3.2:3.5_0": "..."
}