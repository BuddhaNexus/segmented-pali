{
    "thag3.13:0.1_0": "Second:",
    "thag3.13:0.2_0": "The Book of the Threes",
    "thag3.13:0.3_0": "First",
    "thag3.13:0.4_0": "someone presented with clothes,",
    "thag3.13:1.1_0": "Listen up, all my relatives,",
    "thag3.13:1.2_0": "those who have gathered here:",
    "thag3.13:1.3_0": "I’ll teach you Dhamma!",
    "thag3.13:1.4_0": "Painful is birth again and again.",
    "thag3.13:2.1_0": "Rouse yourselves, try harder!",
    "thag3.13:2.2_0": "Devote yourselves to the instructions of the Buddha!",
    "thag3.13:2.3_0": "Crush the army of death,",
    "thag3.13:2.4_0": "as an elephant a hut of reeds.",
    "thag3.13:3.1_0": "Whoever meditates diligently",
    "thag3.13:3.2_0": "diligent as they’ve diligented",
    "thag3.13:3.3_0": "giving up transmigration,",
    "thag3.13:3.4_0": "will make an end to suffering.",
    "thag3.13:3.5_0": "the senior monk ..."
}