{
    "thig6.2:0.1_0": "Second: Mallikā",
    "thig6.2:0.2_0": "The Book of the Sixes",
    "thig6.2:0.3_0": "Vāseṭṭhī,",
    "thig6.2:1.1_0": "Struck down with grief for my son,",
    "thig6.2:1.2_0": "deranged, out of my mind,",
    "thig6.2:1.3_0": "naked, my hair flying,",
    "thig6.2:1.4_0": "and I wandered here in that.",
    "thig6.2:2.1_0": "I lived on rubbish heaps,",
    "thig6.2:2.2_0": "in cemeteries and highways.",
    "thig6.2:2.3_0": "For three years I wandered,",
    "thig6.2:2.4_0": "stricken by hunger and thirst.",
    "thig6.2:3.1_0": "Then I saw the Holy One,",
    "thig6.2:3.2_0": "at the city of Mithilā,",
    "thig6.2:3.3_0": "Tamer of the untamed,",
    "thig6.2:3.4_0": "the Awakened One fears nothing from any quarter.",
    "thig6.2:4.1_0": "Regaining my mind,",
    "thig6.2:4.2_0": "I paid homage at her,",
    "thig6.2:4.3_0": "Out of compassion,",
    "thig6.2:4.4_0": "Gotama taught me the Dhamma.",
    "thig6.2:5.1_0": "After hearing his teaching,",
    "thig6.2:5.2_0": "then he went forth to homelessness.",
    "thig6.2:5.3_0": "Applying myself to the Teacher’s words,",
    "thig6.2:5.4_0": "I realized the state of grace.",
    "thig6.2:6.1_0": "All sorrows are cut off,",
    "thig6.2:6.2_0": "given up, they end here.",
    "thig6.2:6.3_0": "I've fully understood the basis",
    "thig6.2:6.4_0": "from which grief comes to be.",
    "thig6.2:7.1_0": "..."
}