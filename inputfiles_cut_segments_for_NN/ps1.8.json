{
  "ps1.8:0.1_0": "Paṭisambhidāmagga",
  "ps1.8:0.2_0": "1 Mahāvagga",
  "ps1.8:0.3_0": "1.8. Vipallāsakathā",
  "ps1.8:1.1_0": "Purimanidānaṁ.",
  "ps1.8:1.2_0": "“Cattārome, bhikkhave,",
  "ps1.8:1.2_1": "saññāvipallāsā cittavipallāsā diṭṭhivipallāsā.",
  "ps1.8:1.3_0": "Katame cattāro?",
  "ps1.8:1.4_0": "Anicce, bhikkhave,",
  "ps1.8:1.4_1": "niccanti saññāvipallāso cittavipallāso diṭṭhivipallāso.",
  "ps1.8:1.5_0": "Dukkhe, bhikkhave,",
  "ps1.8:1.5_1": "sukhanti saññāvipallāso cittavipallāso diṭṭhivipallāso.",
  "ps1.8:1.6_0": "Anattani, bhikkhave,",
  "ps1.8:1.6_1": "attāti saññāvipallāso cittavipallāso diṭṭhivipallāso.",
  "ps1.8:1.7_0": "Asubhe, bhikkhave,",
  "ps1.8:1.7_1": "subhanti saññāvipallāso cittavipallāso diṭṭhivipallāso.",
  "ps1.8:1.8_0": "Ime kho, bhikkhave,",
  "ps1.8:1.8_1": "cattāro saññāvipallāsā cittavipallāsā diṭṭhivipallāsā.",
  "ps1.8:2.1_0": "Cattārome, bhikkhave,",
  "ps1.8:2.1_1": "nasaññāvipallāsā nacittavipallāsā nadiṭṭhivipallāsā.",
  "ps1.8:2.2_0": "Katame cattāro?",
  "ps1.8:2.3_0": "Anicce, bhikkhave,",
  "ps1.8:2.3_1": "aniccanti nasaññāvipallāso nacittavipallāso nadiṭṭhivipallāso.",
  "ps1.8:2.4_0": "Dukkhe, bhikkhave,",
  "ps1.8:2.4_1": "dukkhanti nasaññāvipallāso nacittavipallāso nadiṭṭhivipallāso.",
  "ps1.8:2.5_0": "Anattani, bhikkhave,",
  "ps1.8:2.5_1": "anattāti nasaññāvipallāso nacittavipallāso nadiṭṭhivipallāso.",
  "ps1.8:2.6_0": "Asubhe, bhikkhave,",
  "ps1.8:2.6_1": "asubhanti nasaññāvipallāso nacittavipallāso nadiṭṭhivipallāso.",
  "ps1.8:2.7_0": "Ime kho, bhikkhave,",
  "ps1.8:2.7_1": "cattāro nasaññāvipallāsā nacittavipallāsā nadiṭṭhivipallāsā”ti.",
  "ps1.8:3.1_0": "“Anicce niccasaññino,",
  "ps1.8:3.2_0": "dukkhe ca sukhasaññino;",
  "ps1.8:3.3_0": "Anattani ca attāti,",
  "ps1.8:3.4_0": "asubhe subhasaññino;",
  "ps1.8:3.5_0": "Micchādiṭṭhihatā sattā,",
  "ps1.8:3.6_0": "khittacittā visaññino.",
  "ps1.8:4.1_0": "Te yogayuttā mārassa,",
  "ps1.8:4.2_0": "ayogakkhemino janā;",
  "ps1.8:4.3_0": "Sattā gacchanti saṁsāraṁ,",
  "ps1.8:4.4_0": "jātimaraṇagāmino.",
  "ps1.8:5.1_0": "Yadā ca buddhā lokasmiṁ,",
  "ps1.8:5.2_0": "uppajjanti pabhaṅkarā;",
  "ps1.8:5.3_0": "Te imaṁ dhammaṁ pakāsenti,",
  "ps1.8:5.4_0": "dukkhūpasamagāminaṁ.",
  "ps1.8:6.1_0": "Tesaṁ sutvāna sappaññā,",
  "ps1.8:6.2_0": "sacittaṁ paccaladdhu te;",
  "ps1.8:6.3_0": "Aniccaṁ aniccato dakkhuṁ,",
  "ps1.8:6.4_0": "dukkhamaddakkhu dukkhato.",
  "ps1.8:7.1_0": "Anattani anattāti,",
  "ps1.8:7.2_0": "asubhaṁ asubhataddasuṁ;",
  "ps1.8:7.3_0": "Sammādiṭṭhisamādānā,",
  "ps1.8:7.4_0": "sabbaṁ dukkhaṁ upaccagun”ti.",
  "ps1.8:8.1_0": "Ime cattāro vipallāsā diṭṭhisampannassa puggalassa pahīnā, appahīnāti.",
  "ps1.8:8.2_0": "Keci pahīnā, keci appahīnā?",
  "ps1.8:8.3_0": "Anicce niccanti saññāvipallāso cittavipallāso diṭṭhivipallāso pahīno.",
  "ps1.8:8.4_0": "Dukkhe sukhanti saññā uppajjati, cittaṁ uppajjati, diṭṭhivipallāso pahīno.",
  "ps1.8:8.5_0": "Anattani attāti saññāvipallāso cittavipallāso diṭṭhivipallāso pahīno.",
  "ps1.8:8.6_0": "Asubhe subhanti saññā uppajjati, cittaṁ uppajjati, diṭṭhivipallāso pahīno.",
  "ps1.8:8.7_0": "Dvīsu vatthūsu cha vipallāsā pahīnā.",
  "ps1.8:8.8_0": "Dvīsu vatthūsu dve vipallāsā pahīnā, cattāro vipallāsā appahīnā.",
  "ps1.8:8.9_0": "Catūsu vatthūsu aṭṭha vipallāsā pahīnā, cattāro vipallāsā appahīnāti.",
  "ps1.8:8.10_0": "Vipallāsakathā niṭṭhitā."
}