{
  "anya-e0808n1:0_0": "2. Mattāvuttiniddesa-dutiyapariccheda",
  "anya-e0808n1:1_0": "Gaṇaniyama",
  "anya-e0808n1:2_0": "17.",
  "anya-e0808n1:3_0": " Chaṭṭho’khilalahu,jo vā,",
  "anya-e0808n1:4_0": "Gayutā’ññe,cha’ggaṇā,na jo visame,;",
  "anya-e0808n1:5_0": "Ariyāya’ntaḍḍhe lo, chaṭṭho,’nte go,gaṇā cha’ññe.",
  "anya-e0808n1:6_0": "Yatiniyama",
  "anya-e0808n1:7_0": "18.",
  "anya-e0808n1:8_0": " Paṭhamaḍḍhe chaṭṭho ce,",
  "anya-e0808n1:9_0": "Sabbalahe,’tthā’dilahuni bhavatiyati;",
  "anya-e0808n1:10_0": "Tapparako,ntepi, sace, carimepi, bhavati catuttho’nte.",
  "anya-e0808n1:11_0": "19.Ariyāsāmaññaṁ ce, pubbo’dita lakkhaṇaṁ bhave yassā.",
  "anya-e0808n1:12_0": "20. Ādima’matha pādayugaṁ, yassā tyaṁ’sehi sā pathyā.",
  "anya-e0808n1:13_0": "21.",
  "anya-e0808n1:14_0": " Yattha gaṇattaya mullaṅghi,",
  "anya-e0808n1:15_0": "Yo’bhayatthā’dimo bhave vipulā.",
  "anya-e0808n1:16_0": "22. Garumajjhago jakāro, catutthako dutiyako capalā.",
  "anya-e0808n1:17_0": "23.",
  "anya-e0808n1:18_0": " Capalā’gatā’khilaṁ ce, dalā’dimaṁ lakkhaṇaṁ bhajati yassā;",
  "anya-e0808n1:19_0": "Pathyālakkhaṇa’maññaṁ, mukhacapalā nāma sā bhavati.",
  "anya-e0808n1:20_0": "24.",
  "anya-e0808n1:21_0": " Pathyāya lakkhaṇaṁ ce, paṭhamaḍḍhe lakkhaṇaṁ tu capalāya;",
  "anya-e0808n1:22_0": "Dutiye dale’tha yassā, pakittitā sā jaghanacapalā.",
  "anya-e0808n1:23_0": "Ariyājātiyo.",
  "anya-e0808n1:24_0": "25.",
  "anya-e0808n1:25_0": " Sabbaṁpaṭhamadale yadi, lakkhaṇa’mariyāya vutta’mubhayesu;",
  "anya-e0808n1:26_0": "Yassā dalesu yuttaṁ,",
  "anya-e0808n1:27_0": "Vuttā sā gīti vutta yati lalitā.",
  "anya-e0808n1:28_0": "26.",
  "anya-e0808n1:29_0": " Ariyāyaṁ dutiya’ḍḍhe, gaditā’khilalakkhaṇaṁ yaṁ taṁ;",
  "anya-e0808n1:30_0": "Bhavati dalesu’bhayesupi,",
  "anya-e0808n1:31_0": "Yadi yassā sā’ya mupagīti.",
  "anya-e0808n1:32_0": "27.",
  "anya-e0808n1:33_0": " Ariyāya’ḍḍhadvitayaṁ, pubbodita lakkhaṇo’petaṁ;",
  "anya-e0808n1:34_0": "Vipariyayenā’bhihitaṁ,",
  "anya-e0808n1:35_0": "Yassā sambhavati ce’ha so’ggīti.",
  "anya-e0808n1:36_0": "28.",
  "anya-e0808n1:37_0": " Ariyāpubba’ḍḍhaṁ yadi, garune’kenā’dhikena nidhane yuttaṁ;",
  "anya-e0808n1:38_0": "Yadi pubba’ḍḍhasamānaṁ, dala mitaraṁ co’ditā’ya’mariyāgīti.",
  "anya-e0808n1:39_0": "Gītijātiyo.",
  "anya-e0808n1:40_0": "29.",
  "anya-e0808n1:41_0": " Visame cha siyuṁ kalā mukhe,",
  "anya-e0808n1:42_0": "Same tva’ṭṭha, ra,la,gā, tato’pari;",
  "anya-e0808n1:43_0": "Vetālīyaṁ ta muccate, lahu chakkaṁ na nirantaraṁ same.",
  "anya-e0808n1:44_0": "30.",
  "anya-e0808n1:45_0": " Vetālīyopamaṁ mukhe taṁ,",
  "anya-e0808n1:46_0": "Opacchandasakaṁ ra,yā ya’dante.",
  "anya-e0808n1:47_0": "31.Āpātalikā kathitā’yaṁ, bhagagā’nte yadi pubbamiva’ññaṁ.",
  "anya-e0808n1:48_0": "32.",
  "anya-e0808n1:49_0": " Yadā’dito dakkhiṇantikā,",
  "anya-e0808n1:50_0": "Ṭhite’ttha pādesvā’khilesu jo.",
  "anya-e0808n1:51_0": "33.",
  "anya-e0808n1:52_0": "‘Udiccavuttī’ti vuccate,",
  "anya-e0808n1:53_0": "Jo cā’do visamesu saṇṭhito.",
  "anya-e0808n1:54_0": "34. Pubbattha, samesu ce ga, jā, ‘paccavutti’ ruditā’ti saṇṭhitā.",
  "anya-e0808n1:55_0": "35.",
  "anya-e0808n1:56_0": " Samāsamā’trā’dinaṁ samā,",
  "anya-e0808n1:57_0": "Saṁyutā bhavati taṁ pavattakaṁ.",
  "anya-e0808n1:58_0": "36. Assa sā sama katā’ parantikā.",
  "anya-e0808n1:59_0": "37. Tada’ññajā cāruhāsinī.",
  "anya-e0808n1:60_0": "Vetālīyajātiyo.",
  "anya-e0808n1:61_0": "38. Dvika vihata vasu lahu acaladhiti ri’ha.",
  "anya-e0808n1:62_0": "39.Mattāsamakaṁ navamo lga’nte.",
  "anya-e0808n1:63_0": "40. Jo nlā’ thavā’ṇṇavā visiloko.",
  "anya-e0808n1:64_0": "41. Tadvayato vānavāsikā’khyā.",
  "anya-e0808n1:65_0": "42. Pañca,ṭṭha,navasu yadi lo citrā.",
  "anya-e0808n1:66_0": "43. Ga,lyā’ṭṭhahi ce’sā vu’pacitrā.",
  "anya-e0808n1:67_0": "44.",
  "anya-e0808n1:68_0": " Ya’matīta lakkhaṇa visesa yutaṁ, (citrā)",
  "anya-e0808n1:69_0": "Mattā samā’di pādā’bhihitaṁ; (Visiloka)",
  "anya-e0808n1:70_0": "Aniyata vutta parimāṇa sahitaṁ, (vānavāsikā)",
  "anya-e0808n1:71_0": "Pathitaṁ janesu pādākulakaṁ. (visiloka)",
  "anya-e0808n1:72_0": "Mattāsamaka jātiyo.",
  "anya-e0808n1:73_0": "45.",
  "anya-e0808n1:74_0": " Vinā vaṇṇehi mattā gā, vinā vaṇṇā garūhi tu;",
  "anya-e0808n1:75_0": "Vinā lahūhi garavo, dale pathyādino matā.",
  "anya-e0808n1:76_0": "Iti vuttodaye chandasi mattāvuttiniddeso nāma",
  "anya-e0808n1:77_0": "Dutiyo paricchedo."
}