{
  "iti31:0.1_0": "Itivuttaka 31",
  "iti31:0.2_0": "Dukanipāta",
  "iti31:0.3_0": "Paṭhamavagga",
  "iti31:0.4_0": "Atapanīyasutta",
  "iti31:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti31:2.1_0": "“Dveme, bhikkhave, dhammā atapanīyā.",
  "iti31:2.2_0": "Katame dve?",
  "iti31:2.3_0": "Idha,",
  "iti31:2.3_1": "bhikkhave,",
  "iti31:2.3_2": "ekacco katakalyāṇo hoti,",
  "iti31:2.3_3": "katakusalo,",
  "iti31:2.3_4": "katabhīruttāṇo,",
  "iti31:2.3_5": "akatapāpo,",
  "iti31:2.3_6": "akataluddo,",
  "iti31:2.3_7": "akatakibbiso.",
  "iti31:2.4_0": "So ‘kataṁ me kalyāṇan’tipi na tappati, ‘akataṁ me pāpan’tipi na tappati.",
  "iti31:2.5_0": "Ime kho, bhikkhave, dve dhammā atapanīyā”ti.",
  "iti31:2.6_0": "Etamatthaṁ bhagavā avoca.",
  "iti31:2.7_0": "Tatthetaṁ iti vuccati:",
  "iti31:3.1_0": "“Kāyaduccaritaṁ hitvā,",
  "iti31:3.2_0": "vacīduccaritāni ca;",
  "iti31:3.3_0": "Manoduccaritaṁ hitvā,",
  "iti31:3.4_0": "yañcaññaṁ dosasañhitaṁ.",
  "iti31:4.1_0": "Akatvākusalaṁ kammaṁ,",
  "iti31:4.2_0": "katvāna kusalaṁ bahuṁ;",
  "iti31:4.3_0": "Kāyassa bhedā sappañño,",
  "iti31:4.4_0": "saggaṁ so upapajjatī”ti.",
  "iti31:5.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti31:5.2_0": "Catutthaṁ."
}