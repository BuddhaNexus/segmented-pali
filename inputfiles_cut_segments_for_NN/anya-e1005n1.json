{
  "anya-e1005n1:0_0": "Sujanakaṇḍo",
  "anya-e1005n1:1_0": "41.",
  "anya-e1005n1:2_0": " Sabbhireva samāsetha,",
  "anya-e1005n1:3_0": "Sabbhi kubbetha santhavaṁ;",
  "anya-e1005n1:4_0": "Sataṁ saddhammamaññāya,",
  "anya-e1005n1:5_0": "Seyyo hoti na pāpiyo.",
  "anya-e1005n1:6_0": "42.",
  "anya-e1005n1:7_0": " Caja dujjana saṁsaggaṁ,",
  "anya-e1005n1:8_0": "Bhaja sādhu samāgamaṁ;",
  "anya-e1005n1:9_0": "Kara puññamahorattiṁ,",
  "anya-e1005n1:10_0": "Sara niccamaniccataṁ.",
  "anya-e1005n1:11_0": "43.",
  "anya-e1005n1:12_0": " Yathā udumbarapakkā,",
  "anya-e1005n1:13_0": "Bahirattakamevaca;",
  "anya-e1005n1:14_0": "Anto kimīhi sampuṇṇā,",
  "anya-e1005n1:15_0": "Evaṁ dujjanahaddayā.",
  "anya-e1005n1:16_0": "44.",
  "anya-e1005n1:17_0": " Yathāpi panasāpakkā,",
  "anya-e1005n1:18_0": "Bahi kaṇḍakameva ca;",
  "anya-e1005n1:19_0": "Anto amatasampannā,",
  "anya-e1005n1:20_0": "Evaṁ sujanahadayā.",
  "anya-e1005n1:21_0": "45.",
  "anya-e1005n1:22_0": " Sukkhopi candanataru na jahāti gandhaṁ,",
  "anya-e1005n1:23_0": "Nāgo gato naramukhe na jahāti līḷaṁ;",
  "anya-e1005n1:24_0": "Yantāgato madhurasaṁ na jahāti ucchu,",
  "anya-e1005n1:25_0": "Dukkhopi paṇḍitajano na jahāti dhammaṁ.",
  "anya-e1005n1:26_0": "46.",
  "anya-e1005n1:27_0": " Sīho nāma jighacchāpi,",
  "anya-e1005n1:28_0": "Paṇṇādīni na khādati;",
  "anya-e1005n1:29_0": "Sīho nāma kisocāpi,",
  "anya-e1005n1:30_0": "Nāgamaṁsaṁ na khādati.",
  "anya-e1005n1:31_0": "47.",
  "anya-e1005n1:32_0": " Kula-jāto kula-putto,",
  "anya-e1005n1:33_0": "Kula-vaṁsa-surakkhato;",
  "anya-e1005n1:34_0": "Attanā dukkha-pattopi,",
  "anya-e1005n1:35_0": "Hīna-kammaṁ na kāraye.",
  "anya-e1005n1:36_0": "48.",
  "anya-e1005n1:37_0": " Candanaṁ sītalaṁ loke,",
  "anya-e1005n1:38_0": "Tato candaṁva sītalaṁ;",
  "anya-e1005n1:39_0": "Canda-candanasītamhā,",
  "anya-e1005n1:40_0": "Sādhu vākyaṁ subhāsitaṁ.",
  "anya-e1005n1:41_0": "49.",
  "anya-e1005n1:42_0": " Udeyya bhāṇu pacchime,",
  "anya-e1005n1:43_0": "Merurājā nameyyapi;",
  "anya-e1005n1:44_0": "Sītalā narakaggipi,",
  "anya-e1005n1:45_0": "Pabbatagge ca uppalaṁ.",
  "anya-e1005n1:46_0": "Vikase na viparītaṁ,",
  "anya-e1005n1:47_0": "Sādhuvāyyaṁ kudācanaṁ.",
  "anya-e1005n1:48_0": "50.",
  "anya-e1005n1:49_0": " Sukhā rukkhassa chāyāva,",
  "anya-e1005n1:50_0": "Tato ñāti mātā pitu;",
  "anya-e1005n1:51_0": "Tato ācariyo rañño,",
  "anya-e1005n1:52_0": "Tato buddhassanekadhā.",
  "anya-e1005n1:53_0": "51.",
  "anya-e1005n1:54_0": " Bhamarā pupphamicchanti,",
  "anya-e1005n1:55_0": "Guṇamicchanti sujanā;",
  "anya-e1005n1:56_0": "Makkhikā pūtimicchanti,",
  "anya-e1005n1:57_0": "Dosamicchanti dujjanā.",
  "anya-e1005n1:58_0": "52.",
  "anya-e1005n1:59_0": " Mātāhīnassa dubbhāsā,",
  "anya-e1005n1:60_0": "Pitāhīnassa dukriyā;",
  "anya-e1005n1:61_0": "Ubho mātā pitā hīnā,",
  "anya-e1005n1:62_0": "Dubbhasāca dukīriyā.",
  "anya-e1005n1:63_0": "53.",
  "anya-e1005n1:64_0": " Mātā seṭṭhassa subhāsā,",
  "anya-e1005n1:65_0": "Pitā seṭṭhassa sukriyā;",
  "anya-e1005n1:66_0": "Ubho mātā pitā seṭṭhā,",
  "anya-e1005n1:67_0": "Subhāsāca sukīriyā.",
  "anya-e1005n1:68_0": "54.",
  "anya-e1005n1:69_0": " Saṅgāme sūra-micchanti,",
  "anya-e1005n1:70_0": "Mantīsu akūtūhalaṁ;",
  "anya-e1005n1:71_0": "Piyañca annapānesu,",
  "anya-e1005n1:72_0": "Atthe jāte ca paṇḍitaṁ.",
  "anya-e1005n1:73_0": "55.",
  "anya-e1005n1:74_0": " Sunakho sunakhaṁ disvā,",
  "anya-e1005n1:75_0": "Dantaṁ dasseti hiṁsituṁ;",
  "anya-e1005n1:76_0": "Dujjano sujanaṁ disvā,",
  "anya-e1005n1:77_0": "Rosayaṁ hiṁsamicchati.",
  "anya-e1005n1:78_0": "56.",
  "anya-e1005n1:79_0": " Mā ca vegena kiccāni,",
  "anya-e1005n1:80_0": "Karosi kārāpesi vā;",
  "anya-e1005n1:81_0": "Sahasā kāritaṁ kammaṁ,",
  "anya-e1005n1:82_0": "Mando pacchānutappati.",
  "anya-e1005n1:83_0": "57.",
  "anya-e1005n1:84_0": " Kodhaṁ vihitvā na kadācinasoce,",
  "anya-e1005n1:85_0": "Makkhappahānaṁ isayo avaṇṇayuṁ;",
  "anya-e1005n1:86_0": "Sabbesa phārusa-vacaṁ khametha,",
  "anya-e1005n1:87_0": "Etaṁ khantiṁ uttamamāhu santo.",
  "anya-e1005n1:88_0": "58.",
  "anya-e1005n1:89_0": " Dukkho nivāso sambādhe,",
  "anya-e1005n1:90_0": "Ṭhāne asucisaṅkate;",
  "anya-e1005n1:91_0": "Tato arimhi appiye,",
  "anya-e1005n1:92_0": "Tatopi akataññunā.",
  "anya-e1005n1:93_0": "59.",
  "anya-e1005n1:94_0": " Ovādeyyānusāseyya,",
  "anya-e1005n1:95_0": "Gāpakā ca nivāraye;",
  "anya-e1005n1:96_0": "Satañhi so piyo hoti,",
  "anya-e1005n1:97_0": "Asataṁ hoti appiyo.",
  "anya-e1005n1:98_0": "60.",
  "anya-e1005n1:99_0": " Uttamattanivātena,",
  "anya-e1005n1:100_0": "Sūraṁ bhedena nijjaye;",
  "anya-e1005n1:101_0": "Nīcaṁ appaka dānena,",
  "anya-e1005n1:102_0": "Vīriyena samaṁ jaye.",
  "anya-e1005n1:103_0": "61.",
  "anya-e1005n1:104_0": " Na visaṁ visamiccāhu,",
  "anya-e1005n1:105_0": "Dhanaṁ saṅghassa uccate;",
  "anya-e1005n1:106_0": "Visaṁ ekaṁva hanati,",
  "anya-e1005n1:107_0": "Sabbaṁ saṅghassa santakaṁ.",
  "anya-e1005n1:108_0": "62.",
  "anya-e1005n1:109_0": " Javane bhadraṁ jānanti,",
  "anya-e1005n1:110_0": "Baliddañca vāhenā;",
  "anya-e1005n1:111_0": "Duhena dhenuṁ jānanti,",
  "anya-e1005n1:112_0": "Bhāsamānena paṇḍitaṁ.",
  "anya-e1005n1:113_0": "63.",
  "anya-e1005n1:114_0": " Dhanamappampi sādhūnaṁ,",
  "anya-e1005n1:115_0": "Kūpe vāriva nissayo;",
  "anya-e1005n1:116_0": "Bahuṁ api asādhūnaṁ,",
  "anya-e1005n1:117_0": "Naca vārīva aṇṇave.",
  "anya-e1005n1:118_0": "64.",
  "anya-e1005n1:119_0": " Najjo pivanti no āpaṁ,",
  "anya-e1005n1:120_0": "Rukkhā khādanti no phalaṁ;",
  "anya-e1005n1:121_0": "Vassanti kvaci no meghā,",
  "anya-e1005n1:122_0": "Paratthāya sataṁ dhanaṁ.",
  "anya-e1005n1:123_0": "65.",
  "anya-e1005n1:124_0": " Apattheyyaṁ na pattheyya,",
  "anya-e1005n1:125_0": "A cinteyyaṁ na cintaye;",
  "anya-e1005n1:126_0": "Dhammameva sucinteyya,",
  "anya-e1005n1:127_0": "Kālaṁ moghaṁ na accaye.",
  "anya-e1005n1:128_0": "66.",
  "anya-e1005n1:129_0": " Acintitampi bhavati,",
  "anya-e1005n1:130_0": "Cintitampi vinassati;",
  "anya-e1005n1:131_0": "Na hi cintāmayā bhogā,",
  "anya-e1005n1:132_0": "Itthiyā purisassavā.",
  "anya-e1005n1:133_0": "67.",
  "anya-e1005n1:134_0": " Asantassa piyo hoti,",
  "anya-e1005n1:135_0": "Sante na kurute piyaṁ;",
  "anya-e1005n1:136_0": "Asataṁ dhammaṁ roceti,",
  "anya-e1005n1:137_0": "Taṁ parābhavato mukhaṁ.",
  "anya-e1005n1:138_0": "Sujanakaṇḍo niṭṭhito."
}