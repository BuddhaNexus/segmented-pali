{
  "kv7.6:0.1_0": "Kathāvatthu",
  "kv7.6:0.2_0": "Mahāpaṇṇāsaka",
  "kv7.6:0.3_0": "Sattamavagga",
  "kv7.6:0.4_0": "Itodinnakathā",
  "kv7.6:1.1_0": "Ito dinnena tattha yāpentīti?",
  "kv7.6:1.2_0": "Āmantā.",
  "kv7.6:1.3_0": "Ito cīvaraṁ denti taṁ cīvaraṁ tattha paribhuñjantīti?",
  "kv7.6:1.4_0": "Na hevaṁ vattabbe …pe…",
  "kv7.6:1.5_0": "ito piṇḍapātaṁ denti,",
  "kv7.6:1.5_1": "ito senāsanaṁ denti,",
  "kv7.6:1.5_2": "ito gilānapaccayabhesajjaparikkhāraṁ denti,",
  "kv7.6:1.5_3": "ito khādanīyaṁ denti,",
  "kv7.6:1.5_4": "ito bhojanīyaṁ denti,",
  "kv7.6:1.5_5": "ito pānīyaṁ denti;",
  "kv7.6:1.6_0": "taṁ pānīyaṁ tattha paribhuñjantīti?",
  "kv7.6:1.7_0": "Na hevaṁ vattabbe …pe….",
  "kv7.6:2.1_0": "Ito dinnena tattha yāpentīti?",
  "kv7.6:2.2_0": "Āmantā.",
  "kv7.6:2.3_0": "Añño aññassa kārako parakataṁ sukhadukkhaṁ añño karoti, añño paṭisaṁvedetīti?",
  "kv7.6:2.4_0": "Na hevaṁ vattabbe …pe….",
  "kv7.6:3.1_0": "Na vattabbaṁ—",
  "kv7.6:3.2_0": "“ito dinnena tattha yāpentī”ti?",
  "kv7.6:3.3_0": "Āmantā.",
  "kv7.6:3.4_0": "Nanu petā attano atthāya dānaṁ dentaṁ anumodenti,",
  "kv7.6:3.4_1": "cittaṁ pasādenti,",
  "kv7.6:3.4_2": "pītiṁ uppādenti,",
  "kv7.6:3.4_3": "somanassaṁ paṭilabhantīti?",
  "kv7.6:3.5_0": "Āmantā.",
  "kv7.6:3.6_0": "Hañci petā attano atthāya dānaṁ dentaṁ anumodenti,",
  "kv7.6:3.6_1": "cittaṁ pasādenti,",
  "kv7.6:3.6_2": "pītiṁ uppādenti,",
  "kv7.6:3.6_3": "somanassaṁ paṭilabhanti;",
  "kv7.6:3.7_0": "tena vata re vattabbe—",
  "kv7.6:3.8_0": "“ito dinnena tattha yāpentī”ti.",
  "kv7.6:4.1_0": "Na vattabbaṁ—",
  "kv7.6:4.2_0": "“ito dinnena tattha yāpentī”ti?",
  "kv7.6:4.3_0": "Āmantā.",
  "kv7.6:4.4_0": "Nanu vuttaṁ bhagavatā—",
  "kv7.6:5.1_0": "“Unname udakaṁ vuṭṭhaṁ,",
  "kv7.6:5.2_0": "yathāninnaṁ pavattati;",
  "kv7.6:5.3_0": "Evameva ito dinnaṁ,",
  "kv7.6:5.4_0": "petānaṁ upakappati.",
  "kv7.6:6.1_0": "Yathā vārivahā pūrā,",
  "kv7.6:6.2_0": "paripūrenti sāgaraṁ;",
  "kv7.6:6.3_0": "Evameva ito dinnaṁ,",
  "kv7.6:6.4_0": "petānaṁ upakappati.",
  "kv7.6:7.1_0": "Na hi tattha kasī atthi,",
  "kv7.6:7.2_0": "gorakkhettha na vijjati;",
  "kv7.6:7.3_0": "Vaṇijjā tādisī natthi,",
  "kv7.6:7.4_0": "hiraññena kayākayaṁ;",
  "kv7.6:7.5_0": "Ito dinnena yāpenti,",
  "kv7.6:7.6_0": "petā kālaṅkatā tahin”ti.",
  "kv7.6:8.1_0": "Attheva suttantoti?",
  "kv7.6:8.2_0": "Āmantā.",
  "kv7.6:8.3_0": "Tena hi ito dinnena tattha yāpentīti.",
  "kv7.6:9.1_0": "Na vattabbaṁ—",
  "kv7.6:9.2_0": "“ito dinnena tattha yāpentī”ti?",
  "kv7.6:9.3_0": "Āmantā.",
  "kv7.6:9.4_0": "Nanu vuttaṁ bhagavatā—",
  "kv7.6:9.5_0": "“pañcimāni, bhikkhave, ṭhānāni sampassantā mātāpitaro puttaṁ icchanti kule jāyamānaṁ.",
  "kv7.6:9.6_0": "Katamāni pañca?",
  "kv7.6:9.7_0": "Bhaṭo vā no bharissati,",
  "kv7.6:9.7_1": "kiccaṁ vā no karissati,",
  "kv7.6:9.7_2": "kulavaṁso ciraṁ ṭhassati,",
  "kv7.6:9.7_3": "dāyajjaṁ paṭipajjissati,",
  "kv7.6:9.7_4": "atha vā pana petānaṁ kālaṅkatānaṁ dakkhiṇaṁ anuppadassati—",
  "kv7.6:9.8_0": "imāni kho, bhikkhave, pañca ṭhānāni sampassantā mātāpitaro puttaṁ icchanti kule jāyamānanti.",
  "kv7.6:10.1_0": "Pañca ṭhānāni sampassaṁ,",
  "kv7.6:10.2_0": "puttaṁ icchanti paṇḍitā;",
  "kv7.6:10.3_0": "Bhaṭo vā no bharissati,",
  "kv7.6:10.4_0": "kiccaṁ vā no karissati.",
  "kv7.6:11.1_0": "Kulavaṁso ciraṁ tiṭṭhe,",
  "kv7.6:11.2_0": "dāyajjaṁ paṭipajjati;",
  "kv7.6:11.3_0": "Atha vā pana petānaṁ,",
  "kv7.6:11.4_0": "dakkhiṇaṁ anuppadassati.",
  "kv7.6:12.1_0": "Ṭhānānetāni sampassaṁ,",
  "kv7.6:12.2_0": "puttaṁ icchanti paṇḍitā;",
  "kv7.6:12.3_0": "Tasmā santo sappurisā,",
  "kv7.6:12.4_0": "kataññū katavedino.",
  "kv7.6:13.1_0": "Bharanti mātāpitaro,",
  "kv7.6:13.2_0": "pubbe katamanussaraṁ;",
  "kv7.6:13.3_0": "Karonti tesaṁ kiccāni,",
  "kv7.6:13.4_0": "yathā taṁ pubbakārinaṁ.",
  "kv7.6:14.1_0": "Ovādakārī bhaṭaposī,",
  "kv7.6:14.2_0": "kulavaṁsaṁ ahāpayaṁ;",
  "kv7.6:14.3_0": "Saddho sīlena sampanno,",
  "kv7.6:14.4_0": "putto hoti pasaṁsiyo”ti.",
  "kv7.6:15.1_0": "Attheva suttantoti?",
  "kv7.6:15.2_0": "Āmantā.",
  "kv7.6:15.3_0": "Tena hi ito dinnena tattha yāpentīti.",
  "kv7.6:15.4_0": "Ito dinnakathā niṭṭhitā."
}