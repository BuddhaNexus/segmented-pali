{
  "tha-ap338:0.1_0": "Therāpadāna",
  "tha-ap338:0.2_0": "Gandhodakavagga",
  "tha-ap338:0.3_0": "6. Pabhaṅkarattheraapadāna",
  "tha-ap338:1.1_0": "“Padumuttarabhagavato,",
  "tha-ap338:1.2_0": "lokajeṭṭhassa tādino;",
  "tha-ap338:1.3_0": "Vipine cetiyaṁ āsi,",
  "tha-ap338:1.4_0": "vāḷamigasamākule.",
  "tha-ap338:2.1_0": "Na koci visahi gantuṁ,",
  "tha-ap338:2.2_0": "cetiyaṁ abhivandituṁ;",
  "tha-ap338:2.3_0": "Tiṇakaṭṭhalatonaddhaṁ,",
  "tha-ap338:2.4_0": "paluggaṁ āsi cetiyaṁ.",
  "tha-ap338:3.1_0": "Vanakammiko tadā āsiṁ,",
  "tha-ap338:3.2_0": "pitumātumatenahaṁ;",
  "tha-ap338:3.3_0": "Addasaṁ vipine thūpaṁ,",
  "tha-ap338:3.4_0": "luggaṁ tiṇalatākulaṁ.",
  "tha-ap338:4.1_0": "Disvānāhaṁ buddhathūpaṁ,",
  "tha-ap338:4.2_0": "garucittaṁ upaṭṭhahiṁ;",
  "tha-ap338:4.3_0": "Buddhaseṭṭhassa thūpoyaṁ,",
  "tha-ap338:4.4_0": "paluggo acchatī vane.",
  "tha-ap338:5.1_0": "Nacchannaṁ nappatirūpaṁ,",
  "tha-ap338:5.2_0": "jānantassa guṇāguṇaṁ;",
  "tha-ap338:5.3_0": "Buddhathūpaṁ asodhetvā,",
  "tha-ap338:5.4_0": "aññaṁ kammaṁ payojaye.",
  "tha-ap338:6.1_0": "Tiṇakaṭṭhañca valliñca,",
  "tha-ap338:6.2_0": "sodhayitvāna cetiye;",
  "tha-ap338:6.3_0": "Vanditvā aṭṭha vārāni,",
  "tha-ap338:6.4_0": "paṭikuṭiko agacchahaṁ.",
  "tha-ap338:7.1_0": "Tena kammena sukatena,",
  "tha-ap338:7.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap338:7.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap338:7.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap338:8.1_0": "Tattha me sukataṁ byamhaṁ,",
  "tha-ap338:8.2_0": "sovaṇṇaṁ sapabhassaraṁ;",
  "tha-ap338:8.3_0": "Saṭṭhiyojanamubbiddhaṁ,",
  "tha-ap338:8.4_0": "tiṁsayojanavitthataṁ.",
  "tha-ap338:9.1_0": "Tisatāni ca vārāni,",
  "tha-ap338:9.2_0": "devarajjamakārayiṁ;",
  "tha-ap338:9.3_0": "Pañcavīsatikkhattuñca,",
  "tha-ap338:9.4_0": "cakkavattī ahosahaṁ.",
  "tha-ap338:10.1_0": "Bhavābhave saṁsaranto,",
  "tha-ap338:10.2_0": "mahābhogaṁ labhāmahaṁ;",
  "tha-ap338:10.3_0": "Bhoge me ūnatā natthi,",
  "tha-ap338:10.4_0": "sodhanāya idaṁ phalaṁ.",
  "tha-ap338:11.1_0": "Sivikā hatthikhandhena,",
  "tha-ap338:11.2_0": "vipine gacchato mama;",
  "tha-ap338:11.3_0": "Yaṁ yaṁ disāhaṁ gacchāmi,",
  "tha-ap338:11.4_0": "saraṇaṁ sampate vanaṁ.",
  "tha-ap338:12.1_0": "Khāṇuṁ vā kaṇṭakaṁ vāpi,",
  "tha-ap338:12.2_0": "nāhaṁ passāmi cakkhunā;",
  "tha-ap338:12.3_0": "Puññakammena saṁyutto,",
  "tha-ap338:12.4_0": "sayamevāpanīyare.",
  "tha-ap338:13.1_0": "Kuṭṭhaṁ gaṇḍo kilāso ca,",
  "tha-ap338:13.2_0": "apamāro vitacchikā;",
  "tha-ap338:13.3_0": "Daddu kacchu ca me natthi,",
  "tha-ap338:13.4_0": "sodhanāya idaṁ phalaṁ.",
  "tha-ap338:14.1_0": "Aññampi me acchariyaṁ,",
  "tha-ap338:14.2_0": "buddhathūpassa sodhane;",
  "tha-ap338:14.3_0": "Nābhijānāmi me kāye,",
  "tha-ap338:14.4_0": "jātaṁ piḷakabindukaṁ.",
  "tha-ap338:15.1_0": "Aññampi me acchariyaṁ,",
  "tha-ap338:15.2_0": "buddhathūpamhi sodhite;",
  "tha-ap338:15.3_0": "Duve bhave saṁsarāmi,",
  "tha-ap338:15.4_0": "devatte atha mānuse.",
  "tha-ap338:16.1_0": "Aññampi me acchariyaṁ,",
  "tha-ap338:16.2_0": "buddhathūpamhi sodhite;",
  "tha-ap338:16.3_0": "Suvaṇṇavaṇṇo sabbattha,",
  "tha-ap338:16.4_0": "sappabhāso bhavāmahaṁ.",
  "tha-ap338:17.1_0": "Aññampi me acchariyaṁ,",
  "tha-ap338:17.2_0": "buddhathūpamhi sodhite;",
  "tha-ap338:17.3_0": "Amanāpaṁ vivajjati,",
  "tha-ap338:17.4_0": "manāpaṁ upatiṭṭhati.",
  "tha-ap338:18.1_0": "Aññampi me acchariyaṁ,",
  "tha-ap338:18.2_0": "buddhathūpamhi sodhite;",
  "tha-ap338:18.3_0": "Visuddhaṁ hoti me cittaṁ,",
  "tha-ap338:18.4_0": "ekaggaṁ susamāhitaṁ.",
  "tha-ap338:19.1_0": "Aññampi me acchariyaṁ,",
  "tha-ap338:19.2_0": "buddhathūpamhi sodhite;",
  "tha-ap338:19.3_0": "Ekāsane nisīditvā,",
  "tha-ap338:19.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap338:20.1_0": "Satasahassito kappe,",
  "tha-ap338:20.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap338:20.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap338:20.4_0": "sodhanāya idaṁ phalaṁ.",
  "tha-ap338:21.1_0": "Paṭisambhidā catasso,",
  "tha-ap338:21.2_0": "…pe…",
  "tha-ap338:21.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap338:22.1_0": "Itthaṁ sudaṁ āyasmā pabhaṅkaro thero imā gāthāyo abhāsitthāti.",
  "tha-ap338:23.1_0": "Pabhaṅkarattherassāpadānaṁ chaṭṭhaṁ."
}