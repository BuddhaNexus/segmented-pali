{
  "tika-s0304t1:0_0": "2. Vedanāsaṁyuttaṁ",
  "tika-s0304t1:1_0": "1. Sagāthāvaggo",
  "tika-s0304t1:2_0": "1. Samādhisuttavaṇṇanā",
  "tika-s0304t1:3_0": "249.Vedanāca pajānātīti saccābhisambodhavasena vuccamānavedanānaṁ pajānanaṁ sātisayasamādhānapubbakanti",
  "tika-s0304t1:3_1": "bhagavatā ‘‘samāhito’’ti vuttanti āha ‘‘upacārena vā appanāya vā samāhito’’ti.",
  "tika-s0304t1:3_2": "Vedanāti tissopi vedanā.",
  "tika-s0304t1:3_3": "Dukkhasaccavasenāti dukkhasaccabhāvena,",
  "tika-s0304t1:3_4": "parijānanavasenāti attho.",
  "tika-s0304t1:3_5": "Sambhavanti samudayaṁ taṇhāvijjākammaphassādippabhedaṁ uppattikāraṇaṁ.",
  "tika-s0304t1:3_6": "Tenāha ‘‘samudayasaccavasena pajānātī’’ti.",
  "tika-s0304t1:3_7": "Yatthāti yaṁnimittaṁ,",
  "tika-s0304t1:3_8": "yaṁ āgamma kāmataṇhāvijjādinirodhā vedanānirodho,",
  "tika-s0304t1:3_9": "tesaṁ ayaṁ nirodho.",
  "tika-s0304t1:3_10": "Nibbānaṁ ārabbha ariyamaggappavattiyā hi nibbānaṁ vedanānirodhoti vutto.",
  "tika-s0304t1:3_11": "Khayaṁ gametīti khayagāmī,",
  "tika-s0304t1:3_12": "taṁ khayagāminaṁ.",
  "tika-s0304t1:3_13": "Chātaṁ vuccati taṇhā kāmānaṁ pātukāmatāvasena pavattanato,",
  "tika-s0304t1:3_14": "accantameva samucchinnattā natthi etasmiṁ chātanti nicchāto.",
  "tika-s0304t1:3_15": "Tenāha ‘‘nittaṇho’’ti.",
  "tika-s0304t1:3_16": "Sammasanacāravedanāti sammasanūpacāravedanā.",
  "tika-s0304t1:3_17": "Dvīhi padehīti ‘‘samāhito sampajāno’’ti imehi dvīhi.",
  "tika-s0304t1:3_18": "‘‘Sato’’ti pana idaṁ sampajānapadasseva upabrūhananti adhippāyo.",
  "tika-s0304t1:3_19": "Sesehi catūhi catusaccaṁ kathitaṁ,",
  "tika-s0304t1:3_20": "itarehi pana dvīhi catusaccabujjhanameva kathitaṁ.",
  "tika-s0304t1:3_21": "Sabbasaṅgāhikoti sabbasabhāvadhammānaṁ saṅgaṇhanako.",
  "tika-s0304t1:3_22": "Tenāha ‘‘catubhūmakadhammaparicchedo vutto’’ti.",
  "tika-s0304t1:4_0": "Samādhisuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:5_0": "2. Sukhasuttavaṇṇanā",
  "tika-s0304t1:6_0": "250.",
  "tika-s0304t1:6_1": "Dukkhaṁ na hotīti adukkhaṁ,",
  "tika-s0304t1:6_2": "sukhaṁ na hotīti asukhaṁ,",
  "tika-s0304t1:6_3": "ma-kāro padasandhikaro.",
  "tika-s0304t1:6_4": "Adukkhamasukhanti vedayitasaddāpekkhāya napuṁsakaniddeso.",
  "tika-s0304t1:6_5": "Saparasantānagate sandhāya ajjhattabahiddhāgahaṇanti āha ‘‘attano ca parassa cā’’ti.",
  "tika-s0304t1:6_6": "Tena sabbampi vedayitaṁ gahitanti daṭṭhabbaṁ .",
  "tika-s0304t1:6_7": "Nassanasabhāvanti ittarakhaṇatāya bhaṅgato uddhaṁ apassitabbasabhāvaṁ.",
  "tika-s0304t1:6_8": "Paloko bhedo etassa atthīti palokinaṁ.",
  "tika-s0304t1:6_9": "Tenāha ‘‘bhijjanasabhāva’’nti.",
  "tika-s0304t1:6_10": "Ñāṇena phusitvā phusitvāti pubbabhāge vipassanāñāṇena aniccā pabhaṅgunoti ārammaṇato,",
  "tika-s0304t1:6_11": "uttarakālaṁ asammohato maggaparamparāya phusitvā phusitvā vayaṁ passanto.",
  "tika-s0304t1:6_12": "Virajjatīti maggavirāgena virajjati.",
  "tika-s0304t1:6_13": "Sammasanacāravedanā kathitā āraddhavipassakānaṁ vasena desanāti.",
  "tika-s0304t1:6_14": "Lokiyalokuttarehi ñāṇehi yāthāvato parijānanaṁ paṭivijjhanaṁ ñāṇaphusanaṁ.",
  "tika-s0304t1:7_0": "Sukhasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:8_0": "3. Pahānasuttavaṇṇanā",
  "tika-s0304t1:9_0": "251.Sabbampi aṭṭhasatapabhedaṁ taṇhaṁ chindi samucchedapahānavasena pajahi.",
  "tika-s0304t1:9_1": "Tenāha ‘‘samucchindī’’ti.",
  "tika-s0304t1:9_2": "Yadaggena taṇhā sabbaso samucchinnā,",
  "tika-s0304t1:9_3": "tadaggena sabbānipi saññojanānīti āha ‘‘dasavidhampī’’tiādi.",
  "tika-s0304t1:9_4": "Sammāti suṭṭhu.",
  "tika-s0304t1:9_5": "Pahānañca nāma upāyena ñāyena pahānanti āha ‘‘hetunā kāraṇenā’’ti.",
  "tika-s0304t1:9_6": "Dassanābhisamayāti asammohapaṭivedhā.",
  "tika-s0304t1:9_7": "Arahattamaggo hi uppajjamānova sabhāvapaṭicchādakaṁ mohaṁ viddhaṁsento eva pavattati,",
  "tika-s0304t1:9_8": "tena māno yāthāvato diṭṭho nāma hoti,",
  "tika-s0304t1:9_9": "ayamassa dassanābhisamayo.",
  "tika-s0304t1:9_10": "Yathā hi sūriye uṭṭhite andhakāro viddhaṁsiyamāno vihato,",
  "tika-s0304t1:9_11": "evaṁ arahattamagge uppajjamāne so sabbaso pahīno eva hoti,",
  "tika-s0304t1:9_12": "na tasmiṁ santāne patiṭṭhaṁ labhati,",
  "tika-s0304t1:9_13": "ayamassa pahānābhisamayo.",
  "tika-s0304t1:9_14": "Tena vuttaṁ ‘‘arahattamaggo hī’’tiādi.",
  "tika-s0304t1:9_15": "Kiccavasenāti asammohapaṭivedhasaṅkhātassa dassanakiccassa anipphādanavasena.",
  "tika-s0304t1:10_0": "Ye ime cattāro antāti sambandho.",
  "tika-s0304t1:10_1": "Mariyādantoti mariyādasaṅkhāto anto.",
  "tika-s0304t1:10_2": "Esa nayo sesattayepi.",
  "tika-s0304t1:10_3": "Tesūti catūsu antesu.",
  "tika-s0304t1:10_4": "Aduṁ catutthakoṭisaṅkhātaṁ sabbasseva vaṭṭadukkhassa antaṁ paricchedaṁ arahattamaggena mānassa diṭṭhattā pahīnattā ca akāsīti yojanā.",
  "tika-s0304t1:10_5": "Samussayo attabhāvo.",
  "tika-s0304t1:11_0": "Na riñcatīti na viveceti na vissajjeti.",
  "tika-s0304t1:11_1": "Tenāha ‘‘sampajaññaṁ na jahatī’’ti,",
  "tika-s0304t1:11_2": "sampajaññaṁ na pariccajatīti attho.",
  "tika-s0304t1:11_3": "Saṅkhyaṁ nopetīti imassa ‘‘diṭṭhadhamme anāsavo’’ti imassa vasena atthaṁ vadanto ‘‘ratto duṭṭho’’ti avoca saupādisesanibbānavasena.",
  "tika-s0304t1:11_4": "Saṅkhyaṁ nopetīti vā diṭṭhe-dhamme anāsavo dhammaṭṭho vedagū kāyassa bhedā manusso devoti vā paññattiṁ",
  "tika-s0304t1:11_5": "na upetīti anupādisesanibbānavasenapi attho vattabbo.",
  "tika-s0304t1:11_6": "Ettha ca sukhādīsu vedanāsu yathākkamaṁ rāgānusayādayo kathitāti āha –",
  "tika-s0304t1:11_7": "‘‘imasmiṁ sutte ārammaṇānusayo kathito’’ti.",
  "tika-s0304t1:11_8": "Yo hi rāgādi paccayasamavāye atiiṭṭhādīsu uppajjanāraho maggena appahīno,",
  "tika-s0304t1:11_9": "so ‘‘rāgānusayo’’tiādinā vutto,",
  "tika-s0304t1:11_10": "appahīnattho so maggena pahātabbo,",
  "tika-s0304t1:11_11": "na pariyuṭṭhānābhibhavatthoti.",
  "tika-s0304t1:12_0": "Pahānasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:13_0": "4. Pātālasuttavaṇṇanā",
  "tika-s0304t1:14_0": "252.",
  "tika-s0304t1:14_1": "Yattha patiṭṭhā natthi ekantikāti ekantikassa mahato pātassa alanti ayamettha attho adhippetoti āha ‘‘natthi ettha patiṭṭhā’’ti.",
  "tika-s0304t1:14_2": "Asambhūtatthanti na sambhūtatthaṁ,",
  "tika-s0304t1:14_3": "musāti attho.",
  "tika-s0304t1:14_4": "Soti assutavā puthujjano.",
  "tika-s0304t1:14_5": "Yaṁ taṁ udakaṁ patatīti yojanā.",
  "tika-s0304t1:14_6": "Yasmā samuddapiṭṭhe antarantarā verambhavātasadiso mahāvāto uṭṭhahitvā mahāsamudde udakaṁ uggacchāpeti,",
  "tika-s0304t1:14_7": "taṁ kadāci cakkavāḷābhimukhaṁ,",
  "tika-s0304t1:14_8": "kadāci sinerupādābhimukhaṁ gantvā taṁ patihanati,",
  "tika-s0304t1:14_9": "tasmā vuttaṁ ‘‘balavāmukhaṁ mahāsamuddassā’’tiādi.",
  "tika-s0304t1:14_10": "Vegena pakkhanditvāti mahatā vātavegena samuddhataṁ teneva vegena pakkhandantañca hutvā.",
  "tika-s0304t1:14_11": "Mahānarakapapāto viyāti yojanāyāmavitthāragambhīrasobbhapapāto viya hoti.",
  "tika-s0304t1:14_12": "Tathārūpānanti tattha vasituṁ samatthānaṁ.",
  "tika-s0304t1:14_13": "Asantanti abhūtaṁ.",
  "tika-s0304t1:14_14": "Atthavasena hi vācā abhūtaṁ nāma.",
  "tika-s0304t1:15_0": "Na patiṭṭhāsīti patiṭṭhaṁ na labhi.",
  "tika-s0304t1:15_1": "Anibaddhanti anibandhanatthaṁ yaṁkiñci.",
  "tika-s0304t1:15_2": "Dubbalañāṇoti ñāṇabalarahito.",
  "tika-s0304t1:15_3": "‘‘Assutavā puthujjano’’ti vatvā ‘‘sutavā ariyasāvako’’ti vuttattā ‘‘sotāpanno dhura’’nti vuttaṁ.",
  "tika-s0304t1:15_4": "Itaresu ariyasāvakesu vattabbameva natthi.",
  "tika-s0304t1:15_5": "Tesañhi vedanā supariññātā.",
  "tika-s0304t1:15_6": "Balavavipassako…pe…",
  "tika-s0304t1:15_7": "yogāvacaropi vaṭṭati mattaso vedanānaṁ pariññātattā.",
  "tika-s0304t1:16_0": "Pātālasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:17_0": "5. Daṭṭhabbasuttavaṇṇanā",
  "tika-s0304t1:18_0": "253.Vipariṇāmanavasenadukkhato daṭṭhabbāti kiñcāpi sukhā,",
  "tika-s0304t1:18_1": "pariṇāmadukkhatā pana sukhavedanāya ekantikāti.",
  "tika-s0304t1:18_2": "Vinivijjhanaṭṭhenāti pīḷanavasena attabhāvassa vijjhanaṭṭhena.",
  "tika-s0304t1:18_3": "Hutvāti paccayasamāgamena uppajjitvā.",
  "tika-s0304t1:18_4": "Tena pākabhāvapubbako attalābho vutto.",
  "tika-s0304t1:18_5": "Abhāvākārenāti bhaṅgupagamanākārena.",
  "tika-s0304t1:18_6": "Tena viddhaṁsabhāvo vutto.",
  "tika-s0304t1:18_7": "Ubhayena udayabbayaparicchinnatāya sikhappattaṁ aniccataṁ dasseti.",
  "tika-s0304t1:18_8": "Svāyaṁ hutvā abhāvākāro itarāsupi vedanāsu labbhateva,",
  "tika-s0304t1:18_9": "adhiko ca pana dvinnaṁ dukkhasabhāvo.",
  "tika-s0304t1:18_10": "Dukkhatāvasena purimānaṁ vedanānaṁ daṭṭhabbatāya dassitattā pacchimāya vedanāya evaṁ daṭṭhabbatā dassitā.",
  "tika-s0304t1:18_11": "Addāti ñāṇagatiyā sacchikatvā adakkhi.",
  "tika-s0304t1:18_12": "Ñāṇagamanañhetaṁ,",
  "tika-s0304t1:18_13": "yadidaṁ dukkhato dassanaṁ.",
  "tika-s0304t1:18_14": "Santasabhāvaṁ sukhadukkhato upasantarūpattā.",
  "tika-s0304t1:19_0": "Daṭṭhabbasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:20_0": "6. Sallasuttavaṇṇanā",
  "tika-s0304t1:21_0": "254.Dvīsu janesūti sutavantaassutavantesu dvīsu janesu.",
  "tika-s0304t1:21_1": "Anugatavedhanti pubbe pavattavedhassa anugatavedhaṁ.",
  "tika-s0304t1:21_2": "Balavatarā diguṇā viya hutvā daḷhatarapavattiyā.",
  "tika-s0304t1:21_3": "Evamevāti yathā viddhassa purisassa anuvedhanā balavatarā, evameva.",
  "tika-s0304t1:21_4": "Samādhimaggaphalāni nissaraṇaṁ vikkhambhanasamucchedapaṭippassaddhivasena.",
  "tika-s0304t1:21_5": "Samādhisīsena hettha jhānañca gahitaṁ.",
  "tika-s0304t1:21_6": "So na jānāti anadhigatattā.",
  "tika-s0304t1:21_7": "Nissaraṇanti jānāti anissaraṇameva.",
  "tika-s0304t1:21_8": "Tāsaṁ samadhigatānaṁ sukhadukkhavedanānaṁ.",
  "tika-s0304t1:21_9": "Na vippayutto appahīnakilesattā.",
  "tika-s0304t1:21_10": "Saṅkhātadhammassāti saṅkhāya paññāya pariññātacatukkhandhassa.",
  "tika-s0304t1:21_11": "Tenāha ‘‘tulitadhammassā’’ti.",
  "tika-s0304t1:21_12": "Imasmimpi sutte purimasutte viya ārammaṇānusayova kathito,",
  "tika-s0304t1:21_13": "so pana tattha vuttanayeneva veditabbo.",
  "tika-s0304t1:21_14": "Anurodhavirodhapahānassa vuttattā khīṇāsavo dhuraṁ.",
  "tika-s0304t1:21_15": "Anāgāmīpi vaṭṭati,",
  "tika-s0304t1:21_16": "tassa virodhappahānaṁ labbhati.",
  "tika-s0304t1:22_0": "Sallasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:23_0": "7. Paṭhamagelaññasuttavaṇṇanā",
  "tika-s0304t1:24_0": "255.",
  "tika-s0304t1:24_1": "Saddahitvā gilāne upaṭṭhātabbe maññissantīti yojanā.",
  "tika-s0304t1:24_2": "Tatthāti tasmiṁ ṭhāne.",
  "tika-s0304t1:24_3": "Kammaṭṭhānānuyogo sappāyo yesaṁ te kammaṭṭhānasappāyā,",
  "tika-s0304t1:24_4": "satipaṭṭhānaratāti attho.",
  "tika-s0304t1:24_5": "Aniccataṁ anupassantoti kāyaṁ paṭicca uppannāya vedanāya ca aniccataṁ anupassanto.",
  "tika-s0304t1:24_6": "Vayaṁ anupassantotiādīsupi eseva nayo.",
  "tika-s0304t1:24_7": "Vayanti pana tāya eva khayasaṅkhātaṁ.",
  "tika-s0304t1:24_8": "Virāganti virajjanaṁ.",
  "tika-s0304t1:24_9": "Paṭinissagganti pariccāgapaṭinissaggaṁ,",
  "tika-s0304t1:24_10": "pakkhandanapaṭinissaggampi vā.",
  "tika-s0304t1:25_0": "Āgamanīyapaṭipadāti ariyamaggassa āgamanaṭṭhāniyā pubbabhāgapaṭipadā.",
  "tika-s0304t1:25_1": "Pubbabhāgāyeva na lokuttarā.",
  "tika-s0304t1:25_2": "Sampajaññaṁ pubbabhāgiyameva.",
  "tika-s0304t1:25_3": "Tisso anupassanā pubbabhāgāyeva vipassanāpariyāpannattā .",
  "tika-s0304t1:25_4": "Missakāti lokiyalokuttaramissakā.",
  "tika-s0304t1:25_5": "Bhāvanākālo dassito ‘‘nirodhānupassino viharato,",
  "tika-s0304t1:25_6": "paṭinissaggānupassino viharato rāgānusayo pahīyatī’’ti vuttattā.",
  "tika-s0304t1:26_0": "Paṭhamagelaññasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:27_0": "8-9. Dutiyagelaññasuttādivaṇṇanā",
  "tika-s0304t1:28_0": "256-257.Phassaṁ paṭiccāti ettha phassasīsena phassāyatanānaṁ gahaṇaṁ.",
  "tika-s0304t1:28_1": "Na hi phassāyatanehi vinā phassassa sambhavo.",
  "tika-s0304t1:28_2": "Tenāha ‘‘kāyova hi ettha phassoti vutto’’ti,",
  "tika-s0304t1:28_3": "phassasīsena vuttoti adhippāyo.",
  "tika-s0304t1:28_4": "Navamaṁ uttānameva heṭṭhā vuttanayattā.",
  "tika-s0304t1:29_0": "Dutiyagelaññasuttādivaṇṇanā niṭṭhitā.",
  "tika-s0304t1:30_0": "10. Phassamūlakasuttavaṇṇanā",
  "tika-s0304t1:31_0": "258.",
  "tika-s0304t1:31_1": "Sukhavedanāya hitaṁ sukhavedaniyaṁ.",
  "tika-s0304t1:31_2": "So panesa hitabhāvo paccayabhāvenāti āha ‘‘sukhavedanāya paccayabhūta’’nti.",
  "tika-s0304t1:31_3": "Imasmimpi suttadvayeti imasmiṁ navame dasame ca suttepi.",
  "tika-s0304t1:31_4": "Sammasanacāravedanāti sammasanīyavedanā eva kathitā,",
  "tika-s0304t1:31_5": "na lokuttarāti adhippāyo.",
  "tika-s0304t1:32_0": "Phassamūlakasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:33_0": "Sagāthāvaggavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:34_0": "2. Rahogatavaggo",
  "tika-s0304t1:35_0": "1. Rahogatasuttavaṇṇanā",
  "tika-s0304t1:36_0": "259.Yaṁkiñci vedayitanti ‘‘sukhaṁ dukkhaṁ adukkhamasukha’’nti vuttaṁ vedayitaṁ dukkhasmiṁ antogadhaṁ,",
  "tika-s0304t1:36_1": "dukkhanti vattabbataṁ labhati pariyāyenāti attho.",
  "tika-s0304t1:36_2": "Tenāha ‘‘taṁ sabbaṁ dukkhanti attho’’ti.",
  "tika-s0304t1:36_3": "Yā esātiādīsu yo saṅkhārānaṁ aniccatāsaṅkhāto hutvā abhāvākāro,",
  "tika-s0304t1:36_4": "yā khayasabhāvatā vinassanasabhāvatā jarāya maraṇena cāti dvidhā vipariṇāmanasabhāvatā,",
  "tika-s0304t1:36_5": "etaṁ sandhāya uddissa sabbaṁ vedayitaṁ dukkhanti mayā vuttanti ayaṁ saṅkhepattho.",
  "tika-s0304t1:36_6": "Sāti saṅkhārānaṁ aniccatā .",
  "tika-s0304t1:36_7": "Vedanānampi aniccatā eva saṅkhārasabhāvattā.",
  "tika-s0304t1:36_8": "Tāsaṁ aniccatā ca nāma maraṇaṁ bhaṅgoti katvā tato uttari dukkhaṁ nāma natthīti sabbā vedanā ‘‘dukkhā’’ti vuttā,",
  "tika-s0304t1:36_9": "yathā ‘‘yadaniccaṁ taṁ dukkha’’nti ca,",
  "tika-s0304t1:36_10": "‘‘pañcupādānakkhandhā dukkhā’’ti ca vuttaṁ.",
  "tika-s0304t1:36_11": "Idaṁ suttapadaṁ.",
  "tika-s0304t1:36_12": "Cattāro āruppāti catasso arūpasamāpattiyo.",
  "tika-s0304t1:36_13": "Etthāti ca etasmiṁ paṭippassaddhivāre.",
  "tika-s0304t1:37_0": "Rahogatasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:38_0": "4. Agārasuttavaṇṇanā",
  "tika-s0304t1:39_0": "262.Puratthimāti vibhattilopena niddeso,",
  "tika-s0304t1:39_1": "nissakke vā etaṁ paccattavacanaṁ.",
  "tika-s0304t1:39_2": "Paṭhamajjhānādivasenāti paṭhamadutiyajjhānavasena.",
  "tika-s0304t1:39_3": "Anussativasenāti nidassanamattaṁ aññassapi upacārajjhānaggahitassa savitakkacārassa nirāmisassa sukhassa labbhanato.",
  "tika-s0304t1:39_4": "Tassapi vā paṭhamajjhānādīti ettha ādi-saddena saṅgaho daṭṭhabbo.",
  "tika-s0304t1:39_5": "Kāmahetu dukkhappattānaṁ dukkhavedanā kāmāmisena sāmisā vedanā.",
  "tika-s0304t1:39_6": "Anuttaravimokkhā nāma arahattaphalaṁ.",
  "tika-s0304t1:39_7": "‘‘Kudāssu nāmāhaṁ tadāyatanaṁ upasampajja viharissāmī’’ti evaṁ pihaṁ upaṭṭhāpayato tasmiṁ anijjhamāne pihappaccayā uppannadomanassavedanā.",
  "tika-s0304t1:39_8": "Nekkhammanissitā upekkhāvedanā nirāmisā adukkhamasukhā nāma.",
  "tika-s0304t1:39_9": "Savisesaṁ pana dassetuṁ ‘‘catutthajjhānavasena uppannā adukkhamasukhavedanā’’ti vuttaṁ.",
  "tika-s0304t1:40_0": "Agārasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:41_0": "5-8. Paṭhamaānandasuttādivaṇṇanā",
  "tika-s0304t1:42_0": "263-266.Heṭṭhā kathitanayāneva,",
  "tika-s0304t1:42_1": "veneyyajjhāsayato pana tesaṁ desanāti daṭṭhabbaṁ.",
  "tika-s0304t1:42_2": "Etthāti etesu catūsu suttesu.",
  "tika-s0304t1:42_3": "Purimāni dve ‘‘paṭhamaṁ jhānaṁ samāpannassa vācā paṭippassaddhā hotī’’tiādinā nayena yāva khīṇāsavassa kilesapaṭippassaddhi,",
  "tika-s0304t1:42_4": "tāva desanāya pavattattā ‘‘paripuṇṇapassaddhikānī’’ti vuttāni.",
  "tika-s0304t1:42_5": "Tāva paripūraṁ katvā adesitattā ‘‘pacchimāni upaḍḍhapassaddhikāni,",
  "tika-s0304t1:42_6": "desanāyā’’tiādi vuttaṁ.",
  "tika-s0304t1:43_0": "Paṭhamaānandasuttādivaṇṇanā niṭṭhitā.",
  "tika-s0304t1:44_0": "9-10. Pañcakaṅgasuttādivaṇṇanā",
  "tika-s0304t1:45_0": "267-268.Daṇḍamuggaraṁ aggasoṇḍamuggaraṁ.",
  "tika-s0304t1:45_1": "Kāḷasuttapakkhipanaṁ kāḷasuttanāḷi.",
  "tika-s0304t1:45_2": "Vāsiādīni pañca aṅgāni assāti pañcakaṅgo.",
  "tika-s0304t1:45_3": "Vatthuvijjāya vuttavidhinā kattabbanissayāni ṭhapetīti thapati.",
  "tika-s0304t1:45_4": "Paṇḍitaudāyitthero,",
  "tika-s0304t1:45_5": "na lāḷudāyitthero.",
  "tika-s0304t1:45_6": "Dvepānandāti aṭṭhakathāya paduddhāro kato –",
  "tika-s0304t1:45_7": "‘‘dvepi mayā ānandā’’ti pana pāḷiyaṁ.",
  "tika-s0304t1:45_8": "Pasādakāyasannissitā kāyikā,",
  "tika-s0304t1:45_9": "cetosannissitā cetasikā.",
  "tika-s0304t1:45_10": "Ādhipaccaṭṭhena sukhameva indriyanti sukhindriyaṁ.",
  "tika-s0304t1:45_11": "Upavicāravasenāti rūpādīni upecca vicaraṇavasena.",
  "tika-s0304t1:45_12": "Atīte ārammaṇe.",
  "tika-s0304t1:45_13": "Paccuppanneti addhāpaccuppanne.",
  "tika-s0304t1:45_14": "Evaṁ aṭṭhādhikaṁ sataṁ aṭṭhasataṁ.",
  "tika-s0304t1:46_0": "Pāṭiyekko anusandhīti pucchānusandhiādīhi visuṁ tehi asammisso eko anusandhi.",
  "tika-s0304t1:46_1": "Ekāpi vedanā kathitā ‘‘tatra,",
  "tika-s0304t1:46_2": "bhikkhave,",
  "tika-s0304t1:46_3": "sutavā ariyasāvako’’ti āharitvā ‘‘phassapaccayā vedanā’’ti.",
  "tika-s0304t1:46_4": "Yasmā bhagavā catutthajjhānupekkhāvedanaṁ vatvā –",
  "tika-s0304t1:46_5": "‘‘atthānanda,",
  "tika-s0304t1:46_6": "etasmā sukhā aññaṁ sukha’’ntiādiṁ vadanto thapatino vādaṁ upatthambheti nāma.",
  "tika-s0304t1:46_7": "Tena hi upekkhāvedanā ‘‘sukha’’nteva vuttā santasabhāvattā.",
  "tika-s0304t1:46_8": "Abhikkantataranti ativiya kantataraṁ manoramataraṁ.",
  "tika-s0304t1:46_9": "Tenāha ‘‘sundaratara’’nti.",
  "tika-s0304t1:46_10": "Paṇītataranti padhānabhāvaṁ nītatāya uḷārataraṁ.",
  "tika-s0304t1:46_11": "Tenāha ‘‘atappakatara’’nti.",
  "tika-s0304t1:46_12": "Sukhanti vuttā paṭipakkhassa suṭṭhu khādanena,",
  "tika-s0304t1:46_13": "sukaraṁ okāsadānamassāti vā.",
  "tika-s0304t1:46_14": "Nirodho sukhaṁ nāma sabbaso udayabbayābhāvato.",
  "tika-s0304t1:46_15": "Tenāha ‘‘niddukkhabhāvasaṅkhātena sukhaṭṭhenā’’ti.",
  "tika-s0304t1:47_0": "Sukhasmiṁyevāti sukhamicceva paññapeti.",
  "tika-s0304t1:47_1": "Nirodhasamāpattiṁ sīsaṁ katvāti nirodhasamāpattidesanāya sīsaṁ uttamaṁ katvā.",
  "tika-s0304t1:47_2": "Desanāya uddesādhimutte uṭṭhāpetvā vitthāritattā ‘‘neyyapuggalassa vasenā’’ti vuttaṁ.",
  "tika-s0304t1:47_3": "Dasamaṁ anantarasutte vuttanayattā uttānatthameva.",
  "tika-s0304t1:48_0": "Pañcakaṅgasuttādivaṇṇanā niṭṭhitā.",
  "tika-s0304t1:49_0": "Rahogatavaggavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:50_0": "3. Aṭṭhasatapariyāyavaggo",
  "tika-s0304t1:51_0": "1. Sīvakasuttavaṇṇanā",
  "tika-s0304t1:52_0": "269.",
  "tika-s0304t1:52_1": "Cūḷā pana assa mahatī atthi savisesā,",
  "tika-s0304t1:52_2": "tasmā ‘‘moḷiyasīvako’’ti vuccati.",
  "tika-s0304t1:52_3": "Channaparibbājakoti kambalādinā kopīnapaṭicchādakaparibbājako.",
  "tika-s0304t1:52_4": "Pittapaccayānīti pittahetukāni .",
  "tika-s0304t1:52_5": "‘‘Tisso vedanā’’ti vatvā tāsaṁ sambhavaṁ dassetuṁ ‘‘katha’’ntiādi vuttaṁ.",
  "tika-s0304t1:52_6": "Kusalavedanā uppajjati pittapaccayā.",
  "tika-s0304t1:52_7": "Pittabhesajjaṁ karissāmīti bhesajjasambharaṇatthañceva tadatthaṁ āmisakiñjakkhasambharaṇatthañca pāṇaṁ hanatīti yojanā.",
  "tika-s0304t1:52_8": "Majjhatto bhesajjakaraṇe udāsīno.",
  "tika-s0304t1:53_0": "Tasmāti yasmā pittādipaccayahetukanti attano ca lokassa ca paccakkhaṁ atidhāvanti ye samaṇā vā brāhmaṇā vā,",
  "tika-s0304t1:53_1": "tasmā tesaṁ micchā.",
  "tika-s0304t1:53_2": "Pittādīnaṁ tiṇṇampi samodhānasannipāte jātāni sannipātikāni.",
  "tika-s0304t1:53_3": "Purimautuno visadiso utuvipariṇāmoti āha ‘‘visabhāgaututo jātānī’’ti .",
  "tika-s0304t1:53_4": "Anudako thaddhalūkhabhūmivibhāgo jaṅgaladeso,",
  "tika-s0304t1:53_5": "vuttavipariyāyena anupadeso veditabbo.",
  "tika-s0304t1:53_6": "Malayaṁ himasītabahulo,",
  "tika-s0304t1:53_7": "itaro uṇhabahulo.",
  "tika-s0304t1:54_0": "Attano pakaticariyānaṁ visamaṁ kāyassa pariharaṇavasena,",
  "tika-s0304t1:54_1": "jātāni pana asayhasahanaadesaakālacaraṇādinā veditabbānīti āha ‘‘mahābhāravahanā’’tiādi.",
  "tika-s0304t1:54_2": "Parassa upakkamato nibbattāni opakkamikānīti āha –",
  "tika-s0304t1:54_3": "‘‘ayaṁ coro vā’’tiādi.",
  "tika-s0304t1:54_4": "Kevalanti bāhirapaccayaṁ anapekkhitvā kevalaṁ teneva.",
  "tika-s0304t1:54_5": "Tenāha ‘‘kammavipākatova jātānī’’ti.",
  "tika-s0304t1:54_6": "Sakkā paṭibāhituṁ patīkārena.",
  "tika-s0304t1:54_7": "Lokavohāro nāma kathito pittasamuṭṭhānādisamaññāya lokasiddhattā.",
  "tika-s0304t1:54_8": "Kāmaṁ sarīrasannissitā vedanā kammanibbattāva,",
  "tika-s0304t1:54_9": "tassā pana paccuppannapaccayavasena evamayaṁ lokavohāroti vuttañceva gahetvā paravādapaṭisedho katoti daṭṭhabbaṁ.",
  "tika-s0304t1:55_0": "Sīvakasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:56_0": "2-10. Aṭṭhasatasuttādivaṇṇanā",
  "tika-s0304t1:57_0": "270-278.",
  "tika-s0304t1:57_1": "Vedanānaṁ aṭṭhādhikaṁ sataṁ,",
  "tika-s0304t1:57_2": "tassa aṭṭhasatassa tabbhāvassa pariyāyo kāraṇaṁ ettha atthīti aṭṭhasatapariyāyo, suttaṁ.",
  "tika-s0304t1:57_3": "Tenāha ‘‘aṭṭhasatassa kāraṇabhūta’’nti.",
  "tika-s0304t1:57_4": "Dhammakāraṇanti pariyattidhammabhūtaṁ kāraṇaṁ.",
  "tika-s0304t1:57_5": "Kāyikāti pañcadvārakāyikā.",
  "tika-s0304t1:57_6": "Tenāha ‘‘kāmāvacareyeva labbhantī’’ti,",
  "tika-s0304t1:57_7": "kāmabhūmikāti attho.",
  "tika-s0304t1:57_8": "Arūpāvacare natthi,",
  "tika-s0304t1:57_9": "tibhūmikāti attho. Tenāha –",
  "tika-s0304t1:57_10": "‘‘arūpe tikacatukkajjhānaṁ uppajjati,",
  "tika-s0304t1:57_11": "tañca kho lokuttaraṁ,",
  "tika-s0304t1:57_12": "na lokiya’’nti.",
  "tika-s0304t1:57_13": "Itarā upekkhāvedanā.",
  "tika-s0304t1:57_14": "Upavicaranti upecca pajjantīti attho.",
  "tika-s0304t1:57_15": "Taṁsampayuttānanti vicārasampayuttānaṁ.",
  "tika-s0304t1:58_0": "Paṭilābhatoti paṭiladdhabhāvato.",
  "tika-s0304t1:58_1": "Samanupassatoti paccavekkhato passato.",
  "tika-s0304t1:58_2": "Atītaṁ khaṇattayātikkamena atikkantaṁ,",
  "tika-s0304t1:58_3": "niruddhappattiyā niruddhaṁ,",
  "tika-s0304t1:58_4": "pakativijahanena vipariṇataṁ.",
  "tika-s0304t1:58_5": "Samanussaratoti cintayato.",
  "tika-s0304t1:58_6": "Gehassitanti kāmaguṇanissitaṁ.",
  "tika-s0304t1:58_7": "Kāmaguṇā hi idha gehanissitadhammena gehapariyāyena vuttā.",
  "tika-s0304t1:59_0": "Vipariṇāmavirāganirodhanti vipariṇāmanaṁ virajjanalakkhaṇaṁ nirujjhanañca viditvā.",
  "tika-s0304t1:59_1": "Pubbeti atīte.",
  "tika-s0304t1:59_2": "Etarahīti idāni vattamānā.",
  "tika-s0304t1:59_3": "Sammappaññāya passatoti vipassanāpaññāya ceva maggapaññāya ca yāthāvato passato.",
  "tika-s0304t1:59_4": "Ussukkāpetunti vipassanaṁ paṭṭhapetvā maggapaṭivedhaṁ pāpetuṁ.",
  "tika-s0304t1:59_5": "Nibbānaṁ uddissa pavattitattā nekkhammassitasomanassāni nāma.",
  "tika-s0304t1:59_6": "Lokāmisapaṭisaṁyuttānanti kāmaguṇanissitānaṁ.",
  "tika-s0304t1:59_7": "Tadāyatananti taṁ āyatanaṁ taṁ kāraṇaṁ arahattaṁ.",
  "tika-s0304t1:59_8": "Anuttaresu vimokkhesūti ariyaphaladhammesu.",
  "tika-s0304t1:59_9": "Pihanti adhigamicchaṁ.",
  "tika-s0304t1:60_0": "Upekkhāti somanassarahitaaññāṇupekkhā.",
  "tika-s0304t1:60_1": "Bālyayogato bālassa,",
  "tika-s0304t1:60_2": "tato eva mūḷhassa puthujjanassa.",
  "tika-s0304t1:60_3": "Kilesodhīnaṁ maggodhīhi ajitattā anodhijinassa.",
  "tika-s0304t1:60_4": "Sattamabhavādito uddhaṁ pavattanavipākassa ajitattā avipākajinassa.",
  "tika-s0304t1:60_5": "Anekādīnave vaṭṭe ādīnavassa ajānanena anādīnavadassāvino.",
  "tika-s0304t1:60_6": "Paṭipattipaṭivedhabāhusaccābhāvena assutavato puthujjanassa.",
  "tika-s0304t1:60_7": "Rūpaṁ sā nātivattati na atikkamati ñāṇasampayuttābhāvato.",
  "tika-s0304t1:60_8": "Sabbasaṅgāhakoti sabbadhamme saṅgaṇhanako.",
  "tika-s0304t1:60_9": "Tatiyādīni yāva dasamā heṭṭhā vuttanayattā uttānatthāneva.",
  "tika-s0304t1:61_0": "Aṭṭhasatasuttādivaṇṇanā niṭṭhitā.",
  "tika-s0304t1:62_0": "11. Nirāmisasuttavaṇṇanā",
  "tika-s0304t1:63_0": "279.",
  "tika-s0304t1:63_1": "Ārammaṇato sampayogato ca kilesāmisena sāmisā.",
  "tika-s0304t1:63_2": "Nirāmisāyāti nissakkavacanaṁ.",
  "tika-s0304t1:63_3": "Nirāmisatarāvāti ekaṁsavacanaṁ tassā tathā nissametabbatāya.",
  "tika-s0304t1:63_4": "Sā hi pīti sabbaso santakilesāmise santāne pavattiyā accantasabhāvadhammārammaṇavisayatāya sayampi sātisayaṁ",
  "tika-s0304t1:63_5": "santasabhāvākārena pavattiyā nirāmisāyapi nirāmisatarā vuttā.",
  "tika-s0304t1:63_6": "Tenāha ‘‘nanu cā’’tiādi.",
  "tika-s0304t1:63_7": "Idāni tamatthaṁ upamāya sādhetuṁ ‘‘yathā hī’’tiādimāha.",
  "tika-s0304t1:63_8": "Appaṭihārikanti paṭiharaṇarahitaṁ appaṭihāraṁ,",
  "tika-s0304t1:63_9": "kenaci anāvaṭanti attho.",
  "tika-s0304t1:63_10": "Sesavāresūti sukhavāraupekkhāvāresu.",
  "tika-s0304t1:64_0": "Vimokkhavāro pana na atidiṭṭho itarehi visadisattā.",
  "tika-s0304t1:64_1": "Tenāha ‘‘vimokkhavāre panā’’tiādi.",
  "tika-s0304t1:64_2": "Rūpapaṭisaṁyuttoti bhāvitarūpapaṭisaṁyutto.",
  "tika-s0304t1:64_3": "Sāmiso nāma yasmā sāmisarūpapaṭibaddhavutti ceva sāmisarūpapaṭibhāgañca ,",
  "tika-s0304t1:64_4": "tasmā ‘‘rūpāmisa’’nti vuccati,",
  "tika-s0304t1:64_5": "tena rūpāmisena sāmiso nāma.",
  "tika-s0304t1:64_6": "Arūpāmisassa abhāvato arūpapaṭisaṁyutto vimokkho nirāmiso nāma.",
  "tika-s0304t1:65_0": "Nirāmisasuttavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:66_0": "Aṭṭhasatapariyāyavaggavaṇṇanā niṭṭhitā.",
  "tika-s0304t1:67_0": "Vedanāsaṁyuttavaṇṇanā niṭṭhitā."
}