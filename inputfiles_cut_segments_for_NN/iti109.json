{
  "iti109:0.1_0": "Itivuttaka 109",
  "iti109:0.2_0": "Catukkanipāta",
  "iti109:0.3_0": "Brāhmaṇadhammayāgavagga",
  "iti109:0.4_0": "Nadīsotasutta",
  "iti109:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti109:2.1_0": "“Seyyathāpi, bhikkhave,",
  "iti109:2.1_1": "puriso nadiyā sotena ovuyheyya piyarūpasātarūpena.",
  "iti109:2.2_0": "Tamenaṁ cakkhumā puriso tīre ṭhito disvā evaṁ vadeyya:",
  "iti109:2.3_0": "‘kiñcāpi kho tvaṁ, ambho purisa,",
  "iti109:2.3_1": "nadiyā sotena ovuyhasi piyarūpasātarūpena,",
  "iti109:2.3_2": "atthi cettha heṭṭhā rahado saūmi sāvaṭṭo sagaho sarakkhaso yaṁ tvaṁ, ambho purisa,",
  "iti109:2.3_3": "rahadaṁ pāpuṇitvā maraṇaṁ vā nigacchasi maraṇamattaṁ vā dukkhan’ti.",
  "iti109:2.4_0": "Atha kho so, bhikkhave,",
  "iti109:2.4_1": "puriso tassa purisassa saddaṁ sutvā hatthehi ca pādehi ca paṭisotaṁ vāyameyya.",
  "iti109:3.1_0": "Upamā kho me ayaṁ, bhikkhave, katā atthassa viññāpanāya.",
  "iti109:3.2_0": "Ayañcettha attho:",
  "iti109:3.3_0": "‘nadiyā soto’ti kho, bhikkhave, taṇhāyetaṁ adhivacanaṁ.",
  "iti109:4.1_0": "‘Piyarūpaṁ sātarūpan’ti kho, bhikkhave,",
  "iti109:4.1_1": "channetaṁ ajjhattikānaṁ āyatanānaṁ adhivacanaṁ.",
  "iti109:5.1_0": "‘Heṭṭhā rahado’ti kho, bhikkhave,",
  "iti109:5.1_1": "pañcannaṁ orambhāgiyānaṁ saṁyojanānaṁ adhivacanaṁ.",
  "iti109:6.1_0": "‘Ūmibhayan’ti kho, bhikkhave,",
  "iti109:6.1_1": "kodhupāyāsassetaṁ adhivacanaṁ.",
  "iti109:7.1_0": "‘Āvaṭṭan’ti kho, bhikkhave,",
  "iti109:7.1_1": "pañcannetaṁ kāmaguṇānaṁ adhivacanaṁ.",
  "iti109:8.1_0": "‘Gaharakkhaso’ti kho, bhikkhave, mātugāmassetaṁ adhivacanaṁ.",
  "iti109:9.1_0": "‘Paṭisoto’ti kho, bhikkhave, nekkhammassetaṁ adhivacanaṁ.",
  "iti109:10.1_0": "‘Hatthehi ca pādehi ca vāyāmo’ti kho, bhikkhave,",
  "iti109:10.1_1": "vīriyārambhassetaṁ adhivacanaṁ.",
  "iti109:11.1_0": "‘Cakkhumā puriso tīre ṭhito’ti kho, bhikkhave,",
  "iti109:11.1_1": "tathāgatassetaṁ adhivacanaṁ arahato sammāsambuddhassā”ti.",
  "iti109:11.2_0": "Etamatthaṁ bhagavā avoca.",
  "iti109:11.3_0": "Tatthetaṁ iti vuccati:",
  "iti109:12.1_0": "“Sahāpi dukkhena jaheyya kāme,",
  "iti109:12.2_0": "Yogakkhemaṁ āyatiṁ patthayāno;",
  "iti109:12.3_0": "Sammappajāno suvimuttacitto,",
  "iti109:12.4_0": "Vimuttiyā phassaye tattha tattha;",
  "iti109:12.5_0": "Sa vedagū vūsitabrahmacariyo,",
  "iti109:12.6_0": "Lokantagū pāragatoti vuccatī”ti.",
  "iti109:13.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti109:13.2_0": "Dasamaṁ."
}