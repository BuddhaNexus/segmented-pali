{
  "bv22:0.1_0": "Buddhavaṁsa",
  "bv22:0.2_0": "22. Sikhībuddhavaṁsa",
  "bv22:1.1_0": "“Vipassissa aparena,",
  "bv22:1.2_0": "sambuddho dvipaduttamo;",
  "bv22:1.3_0": "Sikhivhayo āsi jino,",
  "bv22:1.4_0": "asamo appaṭipuggalo.",
  "bv22:2.1_0": "Mārasenaṁ pamadditvā,",
  "bv22:2.2_0": "patto sambodhimuttamaṁ;",
  "bv22:2.3_0": "Dhammacakkaṁ pavattesi,",
  "bv22:2.4_0": "anukampāya pāṇinaṁ.",
  "bv22:3.1_0": "Dhammacakkaṁ pavattente,",
  "bv22:3.2_0": "sikhimhi jinapuṅgave;",
  "bv22:3.3_0": "Koṭisatasahassānaṁ,",
  "bv22:3.4_0": "paṭhamābhisamayo ahu.",
  "bv22:4.1_0": "Aparampi dhammaṁ desente,",
  "bv22:4.2_0": "gaṇaseṭṭhe naruttame;",
  "bv22:4.3_0": "Navutikoṭisahassānaṁ,",
  "bv22:4.4_0": "dutiyābhisamayo ahu.",
  "bv22:5.1_0": "Yamakapāṭihāriyañca,",
  "bv22:5.2_0": "dassayante sadevake;",
  "bv22:5.3_0": "Asītikoṭisahassānaṁ,",
  "bv22:5.4_0": "tatiyābhisamayo ahu.",
  "bv22:6.1_0": "Sannipātā tayo āsuṁ,",
  "bv22:6.2_0": "sikhissāpi mahesino;",
  "bv22:6.3_0": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv22:6.4_0": "santacittāna tādinaṁ.",
  "bv22:7.1_0": "Bhikkhusatasahassānaṁ,",
  "bv22:7.2_0": "paṭhamo āsi samāgamo;",
  "bv22:7.3_0": "Asītibhikkhusahassānaṁ,",
  "bv22:7.4_0": "dutiyo āsi samāgamo.",
  "bv22:8.1_0": "Sattatibhikkhusahassānaṁ,",
  "bv22:8.2_0": "tatiyo āsi samāgamo;",
  "bv22:8.3_0": "Anupalitto padumaṁva,",
  "bv22:8.4_0": "toyamhi sampavaḍḍhitaṁ.",
  "bv22:9.1_0": "Ahaṁ tena samayena,",
  "bv22:9.2_0": "Arindamo nāma khattiyo;",
  "bv22:9.3_0": "Sambuddhappamukhaṁ saṅghaṁ,",
  "bv22:9.4_0": "Annapānena tappayiṁ.",
  "bv22:10.1_0": "Bahuṁ dussavaraṁ datvā,",
  "bv22:10.2_0": "dussakoṭiṁ anappakaṁ;",
  "bv22:10.3_0": "Alaṅkataṁ hatthiyānaṁ,",
  "bv22:10.4_0": "sambuddhassa adāsahaṁ.",
  "bv22:11.1_0": "Hatthiyānaṁ nimminitvā,",
  "bv22:11.2_0": "kappiyaṁ upanāmayiṁ;",
  "bv22:11.3_0": "Pūrayiṁ mānasaṁ mayhaṁ,",
  "bv22:11.4_0": "niccaṁ daḷhamupaṭṭhitaṁ.",
  "bv22:12.1_0": "Sopi maṁ buddho byākāsi,",
  "bv22:12.2_0": "sikhī lokagganāyako;",
  "bv22:12.3_0": "‘Ekatiṁse ito kappe,",
  "bv22:12.4_0": "ayaṁ buddho bhavissati.",
  "bv22:13.1_0": "Ahu kapilavhayā rammā,",
  "bv22:13.2_0": "…pe…",
  "bv22:13.3_0": "hessāma sammukhā imaṁ’.",
  "bv22:14.1_0": "Tassāhaṁ vacanaṁ sutvā,",
  "bv22:14.2_0": "bhiyyo cittaṁ pasādayiṁ;",
  "bv22:14.3_0": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv22:14.4_0": "dasapāramipūriyā.",
  "bv22:15.1_0": "Nagaraṁ aruṇavatī nāma,",
  "bv22:15.2_0": "Aruṇo nāma khattiyo;",
  "bv22:15.3_0": "Pabhāvatī nāma janikā,",
  "bv22:15.4_0": "Sikhissāpi mahesino.",
  "bv22:16.1_0": "Sattavassasahassāni,",
  "bv22:16.2_0": "agāraṁ ajjha so vasi;",
  "bv22:16.3_0": "Sucandako giri vasabho,",
  "bv22:16.4_0": "tayo pāsādamuttamā.",
  "bv22:17.1_0": "Catuvīsasahassāni,",
  "bv22:17.2_0": "nāriyo samalaṅkatā;",
  "bv22:17.3_0": "Sabbakāmā nāma nārī,",
  "bv22:17.4_0": "atulo nāma atrajo.",
  "bv22:18.1_0": "Nimitte caturo disvā,",
  "bv22:18.2_0": "hatthiyānena nikkhami;",
  "bv22:18.3_0": "Aṭṭhamāsaṁ padhānacāraṁ,",
  "bv22:18.4_0": "acarī purisuttamo.",
  "bv22:19.1_0": "Brahmunā yācito santo,",
  "bv22:19.2_0": "sikhī lokagganāyako;",
  "bv22:19.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv22:19.4_0": "migadāye naruttamo.",
  "bv22:20.1_0": "Abhibhū sambhavo ceva,",
  "bv22:20.2_0": "ahesuṁ aggasāvakā;",
  "bv22:20.3_0": "Khemaṅkaro nāmupaṭṭhāko,",
  "bv22:20.4_0": "sikhissāpi mahesino.",
  "bv22:21.1_0": "Sakhilā ca padumā ca,",
  "bv22:21.2_0": "ahesuṁ aggasāvikā;",
  "bv22:21.3_0": "Bodhi tassa bhagavato,",
  "bv22:21.4_0": "puṇḍarīkoti vuccati.",
  "bv22:22.1_0": "Sirivaḍḍho ca nando ca,",
  "bv22:22.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv22:22.3_0": "Cittā ceva suguttā ca,",
  "bv22:22.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv22:23.1_0": "Uccattanena so buddho,",
  "bv22:23.2_0": "sattatihatthamuggato;",
  "bv22:23.3_0": "Kañcanagghiyasaṅkāso,",
  "bv22:23.4_0": "dvattiṁsavaralakkhaṇo.",
  "bv22:24.1_0": "Tassāpi byāmappabhā kāyā,",
  "bv22:24.2_0": "divārattiṁ nirantaraṁ;",
  "bv22:24.3_0": "Disodisaṁ niccharanti,",
  "bv22:24.4_0": "tīṇiyojanaso pabhā.",
  "bv22:25.1_0": "Sattativassasahassāni,",
  "bv22:25.2_0": "āyu tassa mahesino;",
  "bv22:25.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv22:25.4_0": "tāresi janataṁ bahuṁ.",
  "bv22:26.1_0": "Dhammameghaṁ pavassetvā,",
  "bv22:26.2_0": "temayitvā sadevake;",
  "bv22:26.3_0": "Khemantaṁ pāpayitvāna,",
  "bv22:26.4_0": "nibbuto so sasāvako.",
  "bv22:27.1_0": "Anubyañjanasampannaṁ,",
  "bv22:27.2_0": "dvattiṁsavaralakkhaṇaṁ;",
  "bv22:27.3_0": "Sabbaṁ tamantarahitaṁ,",
  "bv22:27.4_0": "nanu rittā sabbasaṅkhārā.",
  "bv22:28.1_0": "Sikhī munivaro buddho,",
  "bv22:28.2_0": "Assārāmamhi nibbuto;",
  "bv22:28.3_0": "Tatthevassa thūpavaro,",
  "bv22:28.4_0": "Tīṇiyojanamuggato”ti. ",
  "bv22:29.1_0": "Sikhissa bhagavato vaṁso vīsatimo."
}