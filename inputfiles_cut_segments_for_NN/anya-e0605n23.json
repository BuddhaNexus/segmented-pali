{
  "anya-e0605n23:0_0": "Abhisambodhidīpanīgāthā",
  "anya-e0605n23:1_0": "142.",
  "anya-e0605n23:2_0": " Purato gacchati cando rajatacakkaṁ va ambare,",
  "anya-e0605n23:3_0": "Sahassaraṁsi suriyo pacchimenupagacchati.",
  "anya-e0605n23:4_0": "143.",
  "anya-e0605n23:5_0": " Majjhe bodhidumacchatte pallaṅke apparājite,",
  "anya-e0605n23:6_0": "Pallaṅkena nisīditvā dhammaṁ sammasate muni.",
  "anya-e0605n23:7_0": "144.",
  "anya-e0605n23:8_0": " Sakko tasmiṁ khaṇe saṅkhaṁ dhamanto abhidhāvati,",
  "anya-e0605n23:9_0": "Brahmā tiyojanaṁ chattaṁ dhāreti munimuddhani.",
  "anya-e0605n23:10_0": "145.",
  "anya-e0605n23:11_0": " Maṇitālavaṇṭaṁ tusīto suyāmo vāḷabījaniṁ,",
  "anya-e0605n23:12_0": "Nānāmaṅgalabhaṇḍāni gahito sesadevatā.",
  "anya-e0605n23:13_0": "146.",
  "anya-e0605n23:14_0": " Evaṁ dasasahassamhi sakko brahmā ca devatā,",
  "anya-e0605n23:15_0": "Saṅkhādīnī dhamantā ca cakkavāḷamhi pūrayuṁ.",
  "anya-e0605n23:16_0": "147.",
  "anya-e0605n23:17_0": " Maṇgalāni gahetvāna tiṭṭhanti kāci devatā,",
  "anya-e0605n23:18_0": "Dhajamāla gahetvāna tathā puṇṇaghaṭādayo.",
  "anya-e0605n23:19_0": "148.",
  "anya-e0605n23:20_0": " Tattha naccanti gāyanti seḷenti vādayanti ca,",
  "anya-e0605n23:21_0": "Devā dasasahassamhi tuṭṭhahaṭṭhā pamoditā.",
  "anya-e0605n23:22_0": "149.",
  "anya-e0605n23:23_0": " Dhammāmatarasassādaṁ labhissāmassa santike,",
  "anya-e0605n23:24_0": "Nayanāmatarasassādaṁ pāṭihāriyañca passituṁ.",
  "anya-e0605n23:25_0": "150.",
  "anya-e0605n23:26_0": " Jāramaraṇakantārā sokopāyāsasallato,",
  "anya-e0605n23:27_0": "Mocesi kāmapāsamhā desento amataṁ padaṁ.",
  "anya-e0605n23:28_0": "151.",
  "anya-e0605n23:29_0": " Iti tuṭṭhehi devehi pūjiyanto narāsabho,",
  "anya-e0605n23:30_0": "Kiñci pūjaṁ acintento cintento dhammamuttamaṁ.",
  "anya-e0605n23:31_0": "152.",
  "anya-e0605n23:32_0": " Sabbatthasādhito santo siddhattho apparājito,",
  "anya-e0605n23:33_0": "Cakkavāḷasilāsāṇipākārehi manorame.",
  "anya-e0605n23:34_0": "153.",
  "anya-e0605n23:35_0": " Tārāmaṇikhacitākāsavitāne candadīpake,",
  "anya-e0605n23:36_0": "Mānāratamapajjote mālāgandhādipūjite.",
  "anya-e0605n23:37_0": "154.",
  "anya-e0605n23:38_0": " Dibbehi chaṇabherīhi ghuṭṭhe maṅgalagītiyā,",
  "anya-e0605n23:39_0": "Cakkavāḷe suppāsāde bodhimaṇḍamahātale.",
  "anya-e0605n23:40_0": "155.",
  "anya-e0605n23:41_0": " Bodhirukkhamaṇicchatte pallaṅke apparājite,",
  "anya-e0605n23:42_0": "Nissinno paṭhame yāme purimaṁ jātimanussari.",
  "anya-e0605n23:43_0": "156.",
  "anya-e0605n23:44_0": " Namarūpāmanuppatti sudiṭṭhā hoti tenidhā,",
  "anya-e0605n23:45_0": "Sakkātadiṭṭhi tenassa pahīnā hoti sabbaso.",
  "anya-e0605n23:46_0": "157.",
  "anya-e0605n23:47_0": " Tato hi dutiye yāme yathāyammupage sari,",
  "anya-e0605n23:48_0": "Sudiṭṭhaṁ hoti tenassa kammakklesehi sambhavaṁ.",
  "anya-e0605n23:49_0": "158.",
  "anya-e0605n23:50_0": " Kaṅkhāvitaraṇī nāma ñāṇantaṁ samupāgataṁ,",
  "anya-e0605n23:51_0": "Tenasesa pahīyittha kaṅkhā soḷasadhā ṭhitā.",
  "anya-e0605n23:52_0": "159.",
  "anya-e0605n23:53_0": " Tato so tatiye yāme dvādasaṅge asesato,",
  "anya-e0605n23:54_0": "So paṭiccasamuppāde ñāṇamotārayī muni.",
  "anya-e0605n23:55_0": "160.",
  "anya-e0605n23:56_0": " Avijjavādyānulomena jarādipaṭilomato,",
  "anya-e0605n23:57_0": "Sammasanto yathābhūtaṁ ñāṇadassanamāgami.",
  "anya-e0605n23:58_0": "161.",
  "anya-e0605n23:59_0": " Kappakoṭisatenāpi appameyyesu jātisu,",
  "anya-e0605n23:60_0": "Lobhaṁ asesadānena vināsento punappunaṁ.",
  "anya-e0605n23:61_0": "162.",
  "anya-e0605n23:62_0": " Sīlena khantimettāya kokhadosaṁ nivāresi,",
  "anya-e0605n23:63_0": "Paññāya mohaṁ chetvāna micchādiṭṭhi tatheva ca.",
  "anya-e0605n23:64_0": "163.",
  "anya-e0605n23:65_0": " Garūpasevanādīhi vicikicchaṁ vinodayaṁ,",
  "anya-e0605n23:66_0": "Mānuddhaccaṁ vinodento kule jeṭṭhopacāyinā.",
  "anya-e0605n23:67_0": "164.",
  "anya-e0605n23:68_0": " Nekkhammena vināsento kāmarāgaṁ punappunaṁ,",
  "anya-e0605n23:69_0": "Saccena visaṁvādaṁ kosajjaṁ vīriyena ca.",
  "anya-e0605n23:70_0": "165.",
  "anya-e0605n23:71_0": " Evaṁ dānādinā taṁ taṁ kilesaṇgaṁ vinodayaṁ,",
  "anya-e0605n23:72_0": "Suvaḍḍhitā mahāpaññā kathaṁ santiṁ na rūhati.",
  "anya-e0605n23:73_0": "166.",
  "anya-e0605n23:74_0": " Sudukkaraṁ karitvāna dānādipaccayaṁ pure,",
  "anya-e0605n23:75_0": "Na kiñci bhavasampattiṁ patthesi bodhimuttamaṁ.",
  "anya-e0605n23:76_0": "167.",
  "anya-e0605n23:77_0": " Paṇidhānamhā paṭṭhāya kataṁ puññañca patthanaṁ,",
  "anya-e0605n23:78_0": "Ekkattha dāni sampattiṁ deti bodhiṁ asaṁsayaṁ.",
  "anya-e0605n23:79_0": "168.",
  "anya-e0605n23:80_0": " Tato so sabbasaṅkhāre aniccadukkhanattato,",
  "anya-e0605n23:81_0": "Sammasantonulomena nibbānaṁ samupāgami.",
  "anya-e0605n23:82_0": "169.",
  "anya-e0605n23:83_0": " Savāsane kilese so jhāpentonumattaṁ pi ca,",
  "anya-e0605n23:84_0": "Arahattappattiyā suddho buddho bodhitale ahu.",
  "anya-e0605n23:85_0": "170.",
  "anya-e0605n23:86_0": " Patto vimettiṁ varasetachattaṁ,",
  "anya-e0605n23:87_0": "So pītivegena udānudīrayi;",
  "anya-e0605n23:88_0": "Chetvāna māre vijitārisaṅgho,",
  "anya-e0605n23:89_0": "Tibuddhakhettekadivākaro ahu.",
  "anya-e0605n23:90_0": "171.",
  "anya-e0605n23:91_0": " Rājādhirājā varamevamāsi,",
  "anya-e0605n23:92_0": "Tichattadhāri varadhammarājā;",
  "anya-e0605n23:93_0": "Mahāsahassaṁ pi ca lokadhātuṁ,",
  "anya-e0605n23:94_0": "Sarena viññāpayituṁ samattho.",
  "anya-e0605n23:95_0": "172.",
  "anya-e0605n23:96_0": " Buddho lokāloke loke,",
  "anya-e0605n23:97_0": "Jāto satto konummatto;",
  "anya-e0605n23:98_0": "Suddhaṁ buddhaṁ oghā tiṇṇaṁ,",
  "anya-e0605n23:99_0": "Saddho pañño ko no vande.",
  "anya-e0605n23:100_0": "173.",
  "anya-e0605n23:101_0": " Bhajitaṁ cajitaṁ pavanaṁ bhavanaṁ,",
  "anya-e0605n23:102_0": "Jahitaṁ gahitaṁ samalaṁ amalaṁ;",
  "anya-e0605n23:103_0": "Sugataṁ agataṁ sugatiṁ agatiṁ,",
  "anya-e0605n23:104_0": "Namitaṁ amitaṁ namatiṁ sumatiṁ."
}