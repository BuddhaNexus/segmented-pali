{
  "kv21.4:0.1_0": "Kathāvatthu",
  "kv21.4:0.2_0": "Mahāpaṇṇāsaka",
  "kv21.4:0.3_0": "Ekavīsatimavagga",
  "kv21.4:0.4_0": "Iddhikathā",
  "kv21.4:1.1_0": "Atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:1.2_0": "Āmantā.",
  "kv21.4:1.3_0": "“Niccapaṇṇā rukkhā hontū”ti—",
  "kv21.4:1.4_0": "atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:1.5_0": "Na hevaṁ vattabbe …pe…",
  "kv21.4:1.6_0": "“niccapupphā rukkhā hontu …pe…",
  "kv21.4:1.7_0": "niccaphalikā rukkhā hontu …",
  "kv21.4:1.8_0": "niccaṁ juṇhaṁ hotu …",
  "kv21.4:1.9_0": "niccaṁ khemaṁ hotu …",
  "kv21.4:1.10_0": "niccaṁ subhikkhaṁ hotu …",
  "kv21.4:1.11_0": "niccaṁ suvatthi hotū”ti—",
  "kv21.4:1.12_0": "atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:1.13_0": "Na hevaṁ vattabbe …pe….",
  "kv21.4:2.1_0": "Atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:2.2_0": "Āmantā.",
  "kv21.4:2.3_0": "“Uppanno phasso mā nirujjhī”ti—",
  "kv21.4:2.4_0": "atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:2.5_0": "Na hevaṁ vattabbe …pe….",
  "kv21.4:3.1_0": "“Uppannā vedanā …pe…",
  "kv21.4:3.2_0": "saññā …",
  "kv21.4:3.3_0": "cetanā …",
  "kv21.4:3.4_0": "cittaṁ …",
  "kv21.4:3.5_0": "saddhā …",
  "kv21.4:3.6_0": "vīriyaṁ …",
  "kv21.4:3.7_0": "sati …",
  "kv21.4:3.8_0": "samādhi …pe…",
  "kv21.4:3.9_0": "paññā mā nirujjhī”ti—",
  "kv21.4:3.10_0": "atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:3.11_0": "Na hevaṁ vattabbe …pe….",
  "kv21.4:4.1_0": "Atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:4.2_0": "Āmantā.",
  "kv21.4:4.3_0": "“Rūpaṁ niccaṁ hotū”ti—",
  "kv21.4:4.4_0": "atthi adhippāyaiddhi …",
  "kv21.4:4.5_0": "“vedanā …pe…",
  "kv21.4:4.6_0": "saññā …pe…",
  "kv21.4:4.7_0": "saṅkhārā …pe…",
  "kv21.4:4.8_0": "viññāṇaṁ niccaṁ hotū”ti—",
  "kv21.4:4.9_0": "atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:4.10_0": "Na hevaṁ vattabbe …pe….",
  "kv21.4:5.1_0": "Atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:5.2_0": "Āmantā.",
  "kv21.4:5.3_0": "“Jātidhammā sattā mā jāyiṁsū”ti atthi …pe…",
  "kv21.4:5.4_0": "“jarādhammā sattā mā jīriṁsū”ti …pe…",
  "kv21.4:5.5_0": "“byādhidhammā sattā mā byādhiyiṁsū”ti …pe…",
  "kv21.4:5.6_0": "“maraṇadhammā sattā mā mīyiṁsū”ti—",
  "kv21.4:5.7_0": "atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vāti?",
  "kv21.4:5.8_0": "Na hevaṁ vattabbe …pe….",
  "kv21.4:6.1_0": "Na vattabbaṁ—",
  "kv21.4:6.2_0": "“atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vā”ti?",
  "kv21.4:6.3_0": "Āmantā.",
  "kv21.4:6.4_0": "Nanu āyasmā pilindavaccho rañño māgadhassa seniyassa bimbisārassa pāsādaṁ “suvaṇṇan”tveva adhimucci,",
  "kv21.4:6.4_1": "suvaṇṇo ca pana āsīti?",
  "kv21.4:6.5_0": "Āmantā.",
  "kv21.4:6.6_0": "Hañci āyasmā pilindavaccho rañño māgadhassa seniyassa bimbisārassa pāsādaṁ “suvaṇṇan”tveva adhimucci,",
  "kv21.4:6.6_1": "suvaṇṇo ca pana āsi,",
  "kv21.4:6.6_2": "tena vata re vattabbe—",
  "kv21.4:6.7_0": "“atthi adhippāyaiddhi buddhānaṁ vā sāvakānaṁ vā”ti.",
  "kv21.4:6.8_0": "Iddhikathā niṭṭhitā."
}