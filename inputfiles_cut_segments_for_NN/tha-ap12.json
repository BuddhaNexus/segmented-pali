{
  "tha-ap12:0.1_0": "Therāpadāna",
  "tha-ap12:0.2_0": "Buddhavagga",
  "tha-ap12:0.3_0": "12. Ānandattheraapadāna",
  "tha-ap12:1.1_0": "“Ārāmadvārā nikkhamma,",
  "tha-ap12:1.2_0": "padumuttaro mahāmuni;",
  "tha-ap12:1.3_0": "Vassento amataṁ vuṭṭhiṁ,",
  "tha-ap12:1.4_0": "nibbāpesi mahājanaṁ.",
  "tha-ap12:2.1_0": "Satasahassaṁ te dhīrā,",
  "tha-ap12:2.2_0": "chaḷabhiññā mahiddhikā;",
  "tha-ap12:2.3_0": "Parivārenti sambuddhaṁ,",
  "tha-ap12:2.4_0": "chāyāva anapāyinī.",
  "tha-ap12:3.1_0": "Hatthikkhandhagato āsiṁ,",
  "tha-ap12:3.2_0": "setacchattaṁ varuttamaṁ;",
  "tha-ap12:3.3_0": "Sucārurūpaṁ disvāna,",
  "tha-ap12:3.4_0": "vitti me udapajjatha.",
  "tha-ap12:4.1_0": "Oruyha hatthikhandhamhā,",
  "tha-ap12:4.2_0": "upagacchiṁ narāsabhaṁ;",
  "tha-ap12:4.3_0": "Ratanāmayachattaṁ me,",
  "tha-ap12:4.4_0": "buddhaseṭṭhassa dhārayiṁ.",
  "tha-ap12:5.1_0": "Mama saṅkappamaññāya,",
  "tha-ap12:5.2_0": "padumuttaro mahāisi;",
  "tha-ap12:5.3_0": "Taṁ kathaṁ ṭhapayitvāna,",
  "tha-ap12:5.4_0": "imā gāthā abhāsatha.",
  "tha-ap12:6.1_0": "‘Yo so chattamadhāresi,",
  "tha-ap12:6.2_0": "soṇṇālaṅkārabhūsitaṁ;",
  "tha-ap12:6.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap12:6.4_0": "suṇotha mama bhāsato.",
  "tha-ap12:7.1_0": "Ito gantvā ayaṁ poso,",
  "tha-ap12:7.2_0": "tusitaṁ āvasissati;",
  "tha-ap12:7.3_0": "Anubhossati sampattiṁ,",
  "tha-ap12:7.4_0": "accharāhi purakkhato.",
  "tha-ap12:8.1_0": "Catuttiṁsatikkhattuñca,",
  "tha-ap12:8.2_0": "devarajjaṁ karissati;",
  "tha-ap12:8.3_0": "Balādhipo aṭṭhasataṁ,",
  "tha-ap12:8.4_0": "vasudhaṁ āvasissati.",
  "tha-ap12:9.1_0": "Aṭṭhapaññāsakkhattuñca,",
  "tha-ap12:9.2_0": "cakkavattī bhavissati;",
  "tha-ap12:9.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap12:9.4_0": "mahiyā kārayissati.",
  "tha-ap12:10.1_0": "Kappasatasahassamhi,",
  "tha-ap12:10.2_0": "okkākakulasambhavo;",
  "tha-ap12:10.3_0": "Gotamo nāma gottena,",
  "tha-ap12:10.4_0": "satthā loke bhavissati.",
  "tha-ap12:11.1_0": "Sakyānaṁ kulaketussa,",
  "tha-ap12:11.2_0": "ñātibandhu bhavissati;",
  "tha-ap12:11.3_0": "Ānando nāma nāmena,",
  "tha-ap12:11.4_0": "upaṭṭhāko mahesino.",
  "tha-ap12:12.1_0": "Ātāpī nipako cāpi,",
  "tha-ap12:12.2_0": "bāhusacce sukovido;",
  "tha-ap12:12.3_0": "Nivātavutti atthaddho,",
  "tha-ap12:12.4_0": "sabbapāṭhī bhavissati.",
  "tha-ap12:13.1_0": "Padhānapahitatto so,",
  "tha-ap12:13.2_0": "upasanto nirūpadhi;",
  "tha-ap12:13.3_0": "Sabbāsave pariññāya,",
  "tha-ap12:13.4_0": "nibbāyissatināsavo.",
  "tha-ap12:14.1_0": "Santi āraññakā nāgā,",
  "tha-ap12:14.2_0": "kuñjarā saṭṭhihāyanā;",
  "tha-ap12:14.3_0": "Tidhāpabhinnā mātaṅgā,",
  "tha-ap12:14.4_0": "īsādantā urūḷhavā.",
  "tha-ap12:15.1_0": "Anekasatasahassā,",
  "tha-ap12:15.2_0": "paṇḍitāpi mahiddhikā;",
  "tha-ap12:15.3_0": "Sabbe te buddhanāgassa,",
  "tha-ap12:15.4_0": "na hontupaṇidhimhi te’.",
  "tha-ap12:16.1_0": "Ādiyāme namassāmi,",
  "tha-ap12:16.2_0": "majjhime atha pacchime;",
  "tha-ap12:16.3_0": "Pasannacitto sumano,",
  "tha-ap12:16.4_0": "buddhaseṭṭhaṁ upaṭṭhahiṁ.",
  "tha-ap12:17.1_0": "Ātāpī nipako cāpi,",
  "tha-ap12:17.2_0": "sampajāno patissato;",
  "tha-ap12:17.3_0": "Sotāpattiphalaṁ patto,",
  "tha-ap12:17.4_0": "sekhabhūmīsu kovido.",
  "tha-ap12:18.1_0": "Satasahassito kappe,",
  "tha-ap12:18.2_0": "yaṁ kammamabhinīhariṁ;",
  "tha-ap12:18.3_0": "Tāhaṁ bhūmimanuppatto,",
  "tha-ap12:18.4_0": "ṭhitā saddhammamācalā.",
  "tha-ap12:19.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap12:19.2_0": "buddhaseṭṭhassa santike;",
  "tha-ap12:19.3_0": "Tisso vijjā anuppattā,",
  "tha-ap12:19.4_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap12:20.1_0": "Paṭisambhidā catasso,",
  "tha-ap12:20.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap12:20.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap12:20.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap12:21.1_0": "Itthaṁ sudaṁ āyasmā ānando thero imā gāthāyo abhāsitthāti.",
  "tha-ap12:22.1_0": "Ānandattherassāpadānaṁ dasamaṁ.",
  "tha-ap12:23.1_0": "Tassuddānaṁ",
  "tha-ap12:24.1_0": "Buddho paccekabuddho ca,",
  "tha-ap12:24.2_0": "sāriputto ca kolito;",
  "tha-ap12:24.3_0": "Kassapo anuruddho ca,",
  "tha-ap12:24.4_0": "puṇṇatthero upāli ca.",
  "tha-ap12:25.1_0": "Aññāsikoṇḍañño piṇḍolo,",
  "tha-ap12:25.2_0": "revatānandapaṇḍito;",
  "tha-ap12:25.3_0": "Chasatāni ca paññāsa,",
  "tha-ap12:25.4_0": "gāthāyo sabbapiṇḍitā.",
  "tha-ap12:26.1_0": "Apadāne buddhavaggo paṭhamo."
}