{
  "cp25:0.1_0": "Cariyāpiṭaka",
  "cp25:0.2_0": "Yudhañjayavagga",
  "cp25:0.3_0": "Nekkhammapāramī 5",
  "cp25:0.4_0": "Soṇapaṇḍitacariya",
  "cp25:1.1_0": "“Punāparaṁ yadā homi,",
  "cp25:1.2_0": "nagare brahmavaḍḍhane;",
  "cp25:1.3_0": "Tattha kulavare seṭṭhe,",
  "cp25:1.4_0": "mahāsāle ajāyahaṁ.",
  "cp25:2.1_0": "Tadāpi lokaṁ disvāna,",
  "cp25:2.2_0": "Andhībhūtaṁ tamotthaṭaṁ;",
  "cp25:2.3_0": "Cittaṁ bhavato patikuṭati,",
  "cp25:2.4_0": "Tuttavegahataṁ viya.",
  "cp25:3.1_0": "Disvāna vividhaṁ pāpaṁ,",
  "cp25:3.2_0": "evaṁ cintesahaṁ tadā;",
  "cp25:3.3_0": "‘Kadāhaṁ gehā nikkhamma,",
  "cp25:3.4_0": "pavisissāmi kānanaṁ’.",
  "cp25:4.1_0": "Tadāpi maṁ nimantesuṁ,",
  "cp25:4.2_0": "kāmabhogehi ñātayo;",
  "cp25:4.3_0": "Tesampi chandamācikkhiṁ,",
  "cp25:4.4_0": "‘mā nimantetha tehi maṁ’.",
  "cp25:5.1_0": "Yo me kaniṭṭhako bhātā,",
  "cp25:5.2_0": "nando nāmāsi paṇḍito;",
  "cp25:5.3_0": "Sopi maṁ anusikkhanto,",
  "cp25:5.4_0": "pabbajjaṁ samarocayi.",
  "cp25:6.1_0": "Ahaṁ soṇo ca nando ca,",
  "cp25:6.2_0": "ubho mātāpitā mama;",
  "cp25:6.3_0": "Tadāpi bhoge chaḍḍetvā,",
  "cp25:6.4_0": "pāvisimhā mahāvanan”ti.",
  "cp25:7.1_0": "Soṇapaṇḍitacariyaṁ pañcamaṁ."
}