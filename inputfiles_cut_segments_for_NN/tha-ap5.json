{
  "tha-ap5:0.1_0": "Therāpadāna",
  "tha-ap5:0.2_0": "Buddhavagga",
  "tha-ap5:0.3_0": "5. Mahākassapattheraapadāna",
  "tha-ap5:1.1_0": "“Padumuttarassa bhagavato,",
  "tha-ap5:1.2_0": "Lokajeṭṭhassa tādino;",
  "tha-ap5:1.3_0": "Nibbute lokanāthamhi,",
  "tha-ap5:1.4_0": "Pūjaṁ kubbanti satthuno.",
  "tha-ap5:2.1_0": "Udaggacittā janatā,",
  "tha-ap5:2.2_0": "āmoditapamoditā;",
  "tha-ap5:2.3_0": "Tesu saṁvegajātesu,",
  "tha-ap5:2.4_0": "pīti me udapajjatha.",
  "tha-ap5:3.1_0": "Ñātimitte samānetvā,",
  "tha-ap5:3.2_0": "idaṁ vacanamabraviṁ;",
  "tha-ap5:3.3_0": "Parinibbuto mahāvīro,",
  "tha-ap5:3.4_0": "handa pūjaṁ karomase.",
  "tha-ap5:4.1_0": "Sādhūti te paṭissutvā,",
  "tha-ap5:4.2_0": "bhiyyo hāsaṁ janiṁsu me;",
  "tha-ap5:4.3_0": "Buddhasmiṁ lokanāthamhi,",
  "tha-ap5:4.4_0": "kāhāma puññasañcayaṁ.",
  "tha-ap5:5.1_0": "Agghiyaṁ sukataṁ katvā,",
  "tha-ap5:5.2_0": "satahatthasamuggataṁ;",
  "tha-ap5:5.3_0": "Diyaḍḍhahatthapatthaṭaṁ,",
  "tha-ap5:5.4_0": "vimānaṁ nabhamuggataṁ.",
  "tha-ap5:6.1_0": "Katvāna hammiyaṁ tattha,",
  "tha-ap5:6.2_0": "tālapantīhi cittitaṁ;",
  "tha-ap5:6.3_0": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap5:6.4_0": "cetiyaṁ pūjayuttamaṁ.",
  "tha-ap5:7.1_0": "Aggikkhandhova jalito,",
  "tha-ap5:7.2_0": "kiṁsuko iva phullito;",
  "tha-ap5:7.3_0": "Indalaṭṭhīva ākāse,",
  "tha-ap5:7.4_0": "obhāsati catuddisā.",
  "tha-ap5:8.1_0": "Tattha cittaṁ pasādetvā,",
  "tha-ap5:8.2_0": "katvāna kusalaṁ bahuṁ;",
  "tha-ap5:8.3_0": "Pubbakammaṁ saritvāna,",
  "tha-ap5:8.4_0": "tidasaṁ upapajjahaṁ.",
  "tha-ap5:9.1_0": "Sahassayuttaṁ hayavāhiṁ,",
  "tha-ap5:9.2_0": "Dibbayānamadhiṭṭhito;",
  "tha-ap5:9.3_0": "Ubbiddhaṁ bhavanaṁ mayhaṁ,",
  "tha-ap5:9.4_0": "Sattabhūmaṁ samuggataṁ.",
  "tha-ap5:10.1_0": "Kūṭāgārasahassāni,",
  "tha-ap5:10.2_0": "sabbasoṇṇamayā ahuṁ;",
  "tha-ap5:10.3_0": "Jalanti sakatejena,",
  "tha-ap5:10.4_0": "disā sabbā pabhāsayaṁ.",
  "tha-ap5:11.1_0": "Santi aññepi niyyūhā,",
  "tha-ap5:11.2_0": "lohitaṅgamayā tadā;",
  "tha-ap5:11.3_0": "Tepi jotanti ābhāya,",
  "tha-ap5:11.4_0": "samantā caturo disā.",
  "tha-ap5:12.1_0": "Puññakammābhinibbattā,",
  "tha-ap5:12.2_0": "kūṭāgārā sunimmitā;",
  "tha-ap5:12.3_0": "Maṇimayāpi jotanti,",
  "tha-ap5:12.4_0": "disā dasa samantato.",
  "tha-ap5:13.1_0": "Tesaṁ ujjotamānānaṁ,",
  "tha-ap5:13.2_0": "obhāso vipulo ahu;",
  "tha-ap5:13.3_0": "Sabbe deve abhibhomi,",
  "tha-ap5:13.4_0": "puññakammassidaṁ phalaṁ.",
  "tha-ap5:14.1_0": "Saṭṭhikappasahassamhi,",
  "tha-ap5:14.2_0": "ubbiddho nāma khattiyo;",
  "tha-ap5:14.3_0": "Cāturanto vijitāvī,",
  "tha-ap5:14.4_0": "pathaviṁ āvasiṁ ahaṁ.",
  "tha-ap5:15.1_0": "Tatheva bhaddake kappe,",
  "tha-ap5:15.2_0": "tiṁsakkhattuṁ ahosahaṁ;",
  "tha-ap5:15.3_0": "Sakakammābhiraddhomhi,",
  "tha-ap5:15.4_0": "cakkavattī mahabbalo.",
  "tha-ap5:16.1_0": "Sattaratanasampanno,",
  "tha-ap5:16.2_0": "catudīpamhi issaro;",
  "tha-ap5:16.3_0": "Tatthāpi bhavanaṁ mayhaṁ,",
  "tha-ap5:16.4_0": "indalaṭṭhīva uggataṁ.",
  "tha-ap5:17.1_0": "Āyāmato catubbīsaṁ,",
  "tha-ap5:17.2_0": "vitthārena ca dvādasa;",
  "tha-ap5:17.3_0": "Rammaṇaṁ nāma nagaraṁ,",
  "tha-ap5:17.4_0": "daḷhapākāratoraṇaṁ.",
  "tha-ap5:18.1_0": "Āyāmato pañcasataṁ,",
  "tha-ap5:18.2_0": "vitthārena tadaḍḍhakaṁ;",
  "tha-ap5:18.3_0": "Ākiṇṇaṁ janakāyehi,",
  "tha-ap5:18.4_0": "tidasānaṁ puraṁ viya.",
  "tha-ap5:19.1_0": "Yathā sūcighare sūcī,",
  "tha-ap5:19.2_0": "pakkhittā paṇṇavīsati;",
  "tha-ap5:19.3_0": "Aññamaññaṁ paghaṭṭenti,",
  "tha-ap5:19.4_0": "ākiṇṇaṁ hoti laṅkataṁ.",
  "tha-ap5:20.1_0": "Evampi nagaraṁ mayhaṁ,",
  "tha-ap5:20.2_0": "hatthissarathasaṅkulaṁ;",
  "tha-ap5:20.3_0": "Manussehi sadākiṇṇaṁ,",
  "tha-ap5:20.4_0": "rammaṇaṁ nagaruttamaṁ.",
  "tha-ap5:21.1_0": "Tattha bhutvā pivitvā ca,",
  "tha-ap5:21.2_0": "puna devattanaṁ gato;",
  "tha-ap5:21.3_0": "Bhave pacchimake mayhaṁ,",
  "tha-ap5:21.4_0": "ahosi kulasampadā.",
  "tha-ap5:22.1_0": "Brāhmaññakulasambhūto,",
  "tha-ap5:22.2_0": "mahāratanasañcayo;",
  "tha-ap5:22.3_0": "Asītikoṭiyo hitvā,",
  "tha-ap5:22.4_0": "hiraññassāpi pabbajiṁ.",
  "tha-ap5:23.1_0": "Paṭisambhidā catasso,",
  "tha-ap5:23.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap5:23.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap5:23.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap5:24.1_0": "Itthaṁ sudaṁ āyasmā mahākassapo thero imā gāthāyo abhāsitthāti.",
  "tha-ap5:25.1_0": "Mahākassapattherassāpadānaṁ tatiyaṁ."
}