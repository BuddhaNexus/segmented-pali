{
  "cnd3:0.1_0": "Cūḷaniddesa",
  "cnd3:0.2_0": "Pārāyanavaggagāthā",
  "cnd3:0.3_0": "3. Pārāyanatthutigāthā",
  "cnd3:1.1_0": "Idamavoca bhagavā magadhesu viharanto pāsāṇake cetiye,",
  "cnd3:1.1_1": "paricārakasoḷasānaṁ brāhmaṇānaṁ ajjhiṭṭho puṭṭho puṭṭho pañhaṁ byākāsi.",
  "cnd3:1.2_0": "Ekamekassa cepi pañhassa atthamaññāya dhammamaññāya dhammānudhammaṁ paṭipajjeyya,",
  "cnd3:1.2_1": "gaccheyyeva jarāmaraṇassa pāraṁ.",
  "cnd3:1.3_0": "“Pāraṅgamanīyā ime dhammā”ti—",
  "cnd3:1.4_0": "tasmā imassa dhammapariyāyassa pārāyananteva adhivacanaṁ.",
  "cnd3:2.1_0": "Ajito tissametteyyo,",
  "cnd3:2.2_0": "puṇṇako atha mettagū;",
  "cnd3:2.3_0": "Dhotako upasīvo ca,",
  "cnd3:2.4_0": "nando ca atha hemako. ",
  "cnd3:3.1_0": "Todeyyakappā dubhayo,",
  "cnd3:3.2_0": "jatukaṇṇī ca paṇḍito;",
  "cnd3:3.3_0": "Bhadrāvudho udayo ca,",
  "cnd3:3.4_0": "posālo cāpi brāhmaṇo;",
  "cnd3:3.5_0": "Mogharājā ca medhāvī,",
  "cnd3:3.6_0": "piṅgiyo ca mahāisi. ",
  "cnd3:4.1_0": "Ete buddhaṁ upāgacchuṁ,",
  "cnd3:4.2_0": "Sampannacaraṇaṁ isiṁ;",
  "cnd3:4.3_0": "Pucchantā nipuṇe pañhe,",
  "cnd3:4.4_0": "Buddhaseṭṭhaṁ upāgamuṁ. ",
  "cnd3:5.1_0": "Tesaṁ buddho pabyākāsi,",
  "cnd3:5.2_0": "pañhe puṭṭho yathātathaṁ;",
  "cnd3:5.3_0": "Pañhānaṁ veyyākaraṇena,",
  "cnd3:5.4_0": "tosesi brāhmaṇe muni. ",
  "cnd3:6.1_0": "Te tositā cakkhumatā,",
  "cnd3:6.2_0": "buddhenādiccabandhunā;",
  "cnd3:6.3_0": "Brahmacariyamacariṁsu,",
  "cnd3:6.4_0": "varapaññassa santike. ",
  "cnd3:7.1_0": "Ekamekassa pañhassa,",
  "cnd3:7.2_0": "yathā buddhena desitaṁ;",
  "cnd3:7.3_0": "Tathā yo paṭipajjeyya,",
  "cnd3:7.4_0": "gacche pāraṁ apārato. ",
  "cnd3:8.1_0": "Apārā pāraṁ gaccheyya,",
  "cnd3:8.2_0": "bhāvento maggamuttamaṁ;",
  "cnd3:8.3_0": "Maggo so pāraṁ gamanāya,",
  "cnd3:8.4_0": "tasmā pārāyanaṁ iti. "
}