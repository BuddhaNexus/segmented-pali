{
  "cp7:0.1_0": "Cariyāpiṭaka",
  "cp7:0.2_0": "Akittivagga",
  "cp7:0.3_0": "Dānapāramī 7",
  "cp7:0.4_0": "Candakumāracariya",
  "cp7:1.1_0": "“Punāparaṁ yadā homi,",
  "cp7:1.2_0": "ekarājassa atrajo;",
  "cp7:1.3_0": "Nagare pupphavatiyā,",
  "cp7:1.4_0": "kumāro candasavhayo.",
  "cp7:2.1_0": "Tadāhaṁ yajanā mutto,",
  "cp7:2.2_0": "nikkhanto yaññavāṭato;",
  "cp7:2.3_0": "Saṁvegaṁ janayitvāna,",
  "cp7:2.4_0": "mahādānaṁ pavattayiṁ.",
  "cp7:3.1_0": "Nāhaṁ pivāmi khādāmi,",
  "cp7:3.2_0": "napi bhuñjāmi bhojanaṁ;",
  "cp7:3.3_0": "Dakkhiṇeyye adatvāna,",
  "cp7:3.4_0": "api chappañcarattiyo.",
  "cp7:4.1_0": "Yathāpi vāṇijo nāma,",
  "cp7:4.2_0": "Katvāna bhaṇḍasañcayaṁ;",
  "cp7:4.3_0": "Yattha lābho mahā hoti,",
  "cp7:4.4_0": "Tattha taṁ harati bhaṇḍakaṁ.",
  "cp7:5.1_0": "Tatheva sakabhuttāpi,",
  "cp7:5.2_0": "pare dinnaṁ mahapphalaṁ;",
  "cp7:5.3_0": "Tasmā parassa dātabbaṁ,",
  "cp7:5.4_0": "satabhāgo bhavissati.",
  "cp7:6.1_0": "Etamatthavasaṁ ñatvā,",
  "cp7:6.2_0": "demi dānaṁ bhavābhave;",
  "cp7:6.3_0": "Na paṭikkamāmi dānato,",
  "cp7:6.4_0": "sambodhimanupattiyā”ti.",
  "cp7:7.1_0": "Candakumāracariyaṁ sattamaṁ."
}