{
  "cp24:0.1_0": "Cariyāpiṭaka",
  "cp24:0.2_0": "Yudhañjayavagga",
  "cp24:0.3_0": "Nekkhammapāramī 4",
  "cp24:0.4_0": "Bhisacariya",
  "cp24:1.1_0": "“Punāparaṁ yadā homi,",
  "cp24:1.2_0": "kāsīnaṁ puravaruttame;",
  "cp24:1.3_0": "Bhaginī ca bhātaro satta,",
  "cp24:1.4_0": "nibbattā sotthiye kule.",
  "cp24:2.1_0": "Etesaṁ pubbajo āsiṁ,",
  "cp24:2.2_0": "hirīsukkamupāgato;",
  "cp24:2.3_0": "Bhavaṁ disvāna bhayato,",
  "cp24:2.4_0": "nekkhammābhirato ahaṁ.",
  "cp24:3.1_0": "Mātāpitūhi pahitā,",
  "cp24:3.2_0": "sahāyā ekamānasā;",
  "cp24:3.3_0": "Kāmehi maṁ nimantenti,",
  "cp24:3.4_0": "‘kulavaṁsaṁ dharehi’ti.",
  "cp24:4.1_0": "Yaṁ tesaṁ vacanaṁ vuttaṁ,",
  "cp24:4.2_0": "gihīdhamme sukhāvahaṁ;",
  "cp24:4.3_0": "Taṁ me ahosi kaṭhinaṁ,",
  "cp24:4.4_0": "tattaphālasamaṁ viya.",
  "cp24:5.1_0": "Te maṁ tadā ukkhipantaṁ,",
  "cp24:5.2_0": "pucchiṁsu patthitaṁ mama;",
  "cp24:5.3_0": "‘Kiṁ tvaṁ patthayase samma,",
  "cp24:5.4_0": "yadi kāme na bhuñjasi’.",
  "cp24:6.1_0": "Tesāhaṁ evamavacaṁ,",
  "cp24:6.2_0": "atthakāmo hitesinaṁ;",
  "cp24:6.3_0": "‘Nāhaṁ patthemi gihībhāvaṁ,",
  "cp24:6.4_0": "nekkhammābhirato ahaṁ’.",
  "cp24:7.1_0": "Te mayhaṁ vacanaṁ sutvā,",
  "cp24:7.2_0": "pitu mātu ca sāvayuṁ;",
  "cp24:7.3_0": "Mātāpitā evamāhu,",
  "cp24:7.4_0": "‘sabbeva pabbajāma bho’.",
  "cp24:8.1_0": "Ubho mātāpitā mayhaṁ,",
  "cp24:8.2_0": "bhaginī ca satta bhātaro;",
  "cp24:8.3_0": "Amitadhanaṁ chaḍḍayitvā,",
  "cp24:8.4_0": "pāvisimhā mahāvanan”ti.",
  "cp24:9.1_0": "Bhisacariyaṁ catutthaṁ."
}