{
  "tika-s0402t49:0_0": "(16) 1. Indriyavaggo",
  "tika-s0402t49:1_0": "1-5. Indriyasuttādivaṇṇanā",
  "tika-s0402t49:2_0": "151-155. Catutthassa paṭhamādīni uttānāneva.",
  "tika-s0402t49:3_0": "Indriyasuttādivaṇṇanā niṭṭhitā.",
  "tika-s0402t49:4_0": "6-8. Kappasuttādivaṇṇanā",
  "tika-s0402t49:5_0": "156-158.",
  "tika-s0402t49:5_1": "Chaṭṭhe saṁvaṭṭanaṁ vinassanaṁ saṁvaṭṭo,",
  "tika-s0402t49:5_2": "saṁvaṭṭato uddhaṁ tathā ṭhāyī saṁvaṭṭaṭṭhāyī.",
  "tika-s0402t49:5_3": "Vivaṭṭanaṁ nibbattanaṁ,",
  "tika-s0402t49:5_4": "vaḍḍhanaṁ vā vivaṭṭo.",
  "tika-s0402t49:5_5": "‘‘Tejosaṁvaṭṭo,",
  "tika-s0402t49:5_6": "āposaṁvaṭṭo,",
  "tika-s0402t49:5_7": "vāyosaṁvaṭṭoti evaṁ saṁvaṭṭasīmānukkamena saṁvaṭṭesu vattabbesu tathā avatvā āposaṁvaṭṭo,",
  "tika-s0402t49:5_8": "tejosaṁvaṭṭo,",
  "tika-s0402t49:5_9": "vāyosaṁvaṭṭoti vacanaṁ saṁvaṭṭamahābhūtadesanānupubbiyā’’ti keci.",
  "tika-s0402t49:5_10": "‘‘Bhāvīsaṁvaṭṭānupubbiyā’’ti apare.",
  "tika-s0402t49:5_11": "Āpena saṁvaṭṭo āposaṁvaṭṭo.",
  "tika-s0402t49:5_12": "Saṁvaṭṭasīmāti saṁvaṭṭanamariyādā.",
  "tika-s0402t49:5_13": "Saṁvaṭṭatīti vinassati.",
  "tika-s0402t49:5_14": "Sadāti sabbakālaṁ,",
  "tika-s0402t49:5_15": "tīsupi saṁvaṭṭakālesūti attho.",
  "tika-s0402t49:5_16": "Ekaṁ buddhakkhettaṁ vinassatīti ettha buddhakkhettaṁ nāma tividhaṁ hoti jātikkhettaṁ,",
  "tika-s0402t49:5_17": "āṇākkhettaṁ,",
  "tika-s0402t49:5_18": "visayakkhettañca.",
  "tika-s0402t49:6_0": "Tattha jātikkhettaṁ dasasahassacakkavāḷapariyantaṁ hoti,",
  "tika-s0402t49:6_1": "tathāgatassa paṭisandhiggahaṇādīsu kampati.",
  "tika-s0402t49:6_2": "Āṇākkhettaṁ koṭisatasahassacakkavāḷapariyantaṁ,",
  "tika-s0402t49:6_3": "yattha ratanasuttaṁ (khu. pā.",
  "tika-s0402t49:6_4": "6.1 ādayo; su. ni.",
  "tika-s0402t49:6_5": "224 ādayo) khandhaparittaṁ (a. ni. 4.67; cūḷava.",
  "tika-s0402t49:6_6": "251) dhajaggaparittaṁ (saṁ. ni.",
  "tika-s0402t49:6_7": "1.249) āṭānāṭiyaparittaṁ (dī. ni.",
  "tika-s0402t49:6_8": "3.277-278) moraparittanti (jā.",
  "tika-s0402t49:6_9": "1.2.17-18) imesaṁ parittānaṁ ānubhāvo vattati.",
  "tika-s0402t49:6_10": "Visayakkhettaṁ anantāparimāṇaṁ,",
  "tika-s0402t49:6_11": "yaṁ ‘‘yāvatā vā panākaṅkheyyā’’ti (a. ni.",
  "tika-s0402t49:6_12": "3.81) vuttaṁ.",
  "tika-s0402t49:6_13": "Tattha yaṁ yaṁ tathāgato ākaṅkhati,",
  "tika-s0402t49:6_14": "taṁ taṁ jānāti.",
  "tika-s0402t49:6_15": "Evametesu tīsu buddhakkhettesu ekaṁ āṇākkhettaṁ vinassati ,",
  "tika-s0402t49:6_16": "tasmiṁ pana vinassante jātikkhettaṁ vinaṭṭhameva hoti,",
  "tika-s0402t49:6_17": "vinassantañca ekatova vinassati,",
  "tika-s0402t49:6_18": "saṇṭhahantañca ekatova saṇṭhahati.",
  "tika-s0402t49:6_19": "Sesamettha visuddhimaggasaṁvaṇṇanāsu (visuddhi. mahāṭī.",
  "tika-s0402t49:6_20": "2.404) vuttanayeneva gahetabbaṁ.",
  "tika-s0402t49:6_21": "Sattamaṭṭhamāni uttānatthāneva.",
  "tika-s0402t49:7_0": "Kappasuttādivaṇṇanā niṭṭhitā.",
  "tika-s0402t49:8_0": "9. Bhikkhunīsuttavaṇṇanā",
  "tika-s0402t49:9_0": "159.",
  "tika-s0402t49:9_1": "Navame evaṁ pavattaṁ paccuppannataṇhaṁ nissāyāti ‘‘kudāssu nāmāhampi āsavānaṁ khayā’’tiādinā nayena anuttare",
  "tika-s0402t49:9_2": "vimokkhe pihaṁ uppādentassa uppannataṇhaṁ nissāya.",
  "tika-s0402t49:9_3": "Kathaṁ pana lokuttaradhamme ārabbha āsā uppajjatīti?",
  "tika-s0402t49:9_4": "Na kho panetaṁ evaṁ daṭṭhabbaṁ,",
  "tika-s0402t49:9_5": "na ārammaṇakaraṇavasena tattha pihā pavattati avisayattā puggalassa ca anadhigatabhāvato.",
  "tika-s0402t49:9_6": "Anussavūpaladdhe pana anuttaravimokkhe uddissa pihaṁ uppādento tattha pihaṁ uppādeti nāma.",
  "tika-s0402t49:9_7": "Nākaḍḍhatīti kammapathabhāvaṁ appattatāya paṭisandhiṁ na deti.",
  "tika-s0402t49:9_8": "Sesaṁ suviññeyyameva.",
  "tika-s0402t49:10_0": "Bhikkhunīsuttavaṇṇanā niṭṭhitā.",
  "tika-s0402t49:11_0": "10. Sugatavinayasuttavaṇṇanā",
  "tika-s0402t49:12_0": "160.",
  "tika-s0402t49:12_1": "Dasame vaḷañjentīti sajjhāyanti ceva vācuggataṁ karontā dhārenti ca.",
  "tika-s0402t49:12_2": "Avigatataṇhatāya taṁ taṁ parikkhārajātaṁ bahumpi ādiyantīti bahulā,",
  "tika-s0402t49:12_3": "te eva bāhulikā yathā ‘‘venayiko’’ti (ma. ni. 1.246; a. ni. 8.11; pārā. 8).",
  "tika-s0402t49:12_4": "Te pana yasmā paccayabahulabhāvā yuttappayuttā nāma honti,",
  "tika-s0402t49:12_5": "tasmā āha ‘‘paccayabāhullāya paṭipannā’’ti.",
  "tika-s0402t49:12_6": "Sithilaṁ gaṇhantīti sāthalikā,",
  "tika-s0402t49:12_7": "sikkhāya ādaragāravābhāvena sithilaṁ adaḷhaṁ gaṇhantīti attho.",
  "tika-s0402t49:12_8": "Sithilanti ca bhāvanapuṁsakaniddeso,",
  "tika-s0402t49:12_9": "sithila-saddena vā samānatthassa sāthalasaddassa vasena sāthalikāti padasiddhi veditabbā.",
  "tika-s0402t49:12_10": "Avagamanatoti adhogamanato,",
  "tika-s0402t49:12_11": "orambhāgiyabhāvatoti attho.",
  "tika-s0402t49:12_12": "Nibbīriyāti ujjhitussāhā tadadhigamāya ārambhampi akurumānā.",
  "tika-s0402t49:13_0": "Sugatavinayasuttavaṇṇanā niṭṭhitā.",
  "tika-s0402t49:14_0": "Indriyavaggavaṇṇanā niṭṭhitā."
}