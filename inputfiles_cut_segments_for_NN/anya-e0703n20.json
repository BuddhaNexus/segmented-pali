{
  "anya-e0703n20:0_0": "Ekavīsatima pariccheda",
  "anya-e0703n20:1_0": "Vañca rājako",
  "anya-e0703n20:2_0": "1.",
  "anya-e0703n20:3_0": " Uttiyassa kaniṭṭho tu, mahāsivo tadaccaye;",
  "anya-e0703n20:4_0": "Dasa vassāni kāresi, rajjaṁ sujana sevako.",
  "anya-e0703n20:5_0": "2.",
  "anya-e0703n20:6_0": " Bhaddasālamhi so there, pasīditvā manoramaṁ;",
  "anya-e0703n20:7_0": "Kāresi purimāyantu, vihāraṁ nagaraṅgaṇaṁ.",
  "anya-e0703n20:8_0": "3.",
  "anya-e0703n20:9_0": " Mahāsivakaniṭṭho tu, suratisso tadaccaye;",
  "anya-e0703n20:10_0": "Dasavassāni kāresi, rajjaṁ puññesu sādaro.",
  "anya-e0703n20:11_0": "4.",
  "anya-e0703n20:12_0": " Dakkhiṇāya disāyaṁ so, vihāraṁ nagaraṁ gaṇaṁ;",
  "anya-e0703n20:13_0": "Purimāya hatthikkhandhañca, gokaṇṇagirimeva ca.",
  "anya-e0703n20:14_0": "5.",
  "anya-e0703n20:15_0": " Vaṅguttare pabbatamhi, pācina pabbatavhayaṁ;",
  "anya-e0703n20:16_0": "Raheṇakasamīpamhi, tathā koḷambakāḷakaṁ.",
  "anya-e0703n20:17_0": "6.",
  "anya-e0703n20:18_0": " Ariṭṭhapāde maṁ gulakaṁ, purimāya’ccha gallakaṁ;",
  "anya-e0703n20:19_0": "Girinelapanāyakaṇḍaṁ, nagarassuttharāya tu.",
  "anya-e0703n20:20_0": "7.",
  "anya-e0703n20:21_0": " Pañcasatā neva mādi-vihāre puthavī pati;",
  "anya-e0703n20:22_0": "Gaṅgāya orapārañhi, laṁkādīpe tahiṁ tahiṁ.",
  "anya-e0703n20:23_0": "8.",
  "anya-e0703n20:24_0": " Pure rajjā ca rajje ca, saṭṭhīvassāni sādhukaṁ;",
  "anya-e0703n20:25_0": "Kāresi ramme dhammena, ratanattaya gāravo.",
  "anya-e0703n20:26_0": "9.",
  "anya-e0703n20:27_0": " Suvaṇṇapiṇḍatissoti, nāmaṁ rajjā tassā ahu;",
  "anya-e0703n20:28_0": "Suratissoti nāmantu, tassā’purajjapattiyā.",
  "anya-e0703n20:29_0": "10.",
  "anya-e0703n20:30_0": " Assanāvikaputtā dve, damiḷā senaguttikā;",
  "anya-e0703n20:31_0": "Suratissamahīpālaṁ, taṁ gahetvā mahabbalā.",
  "anya-e0703n20:32_0": "11.",
  "anya-e0703n20:33_0": " Duve vīsativassāni, rajjaṁ dhammena kārayuṁ;",
  "anya-e0703n20:34_0": "Te gahetvā aselo tu, muṭasivassa atrajo.",
  "anya-e0703n20:35_0": "12.",
  "anya-e0703n20:36_0": " Sodariyānaṁ bhātūnaṁ, navamo bhatuko tato;",
  "anya-e0703n20:37_0": "Anurādhapure rajjaṁ, dasavassāni kārayi.",
  "anya-e0703n20:38_0": "13.",
  "anya-e0703n20:39_0": " Coḷaraṭṭhā idha gamma, rajjatthaṁ ujujātiko;",
  "anya-e0703n20:40_0": "Eḷāro nāma damiḷo, gahetvā’selabhūpatiṁ.",
  "anya-e0703n20:41_0": "14.",
  "anya-e0703n20:42_0": " Vassāni cattārīsañca, cattāri ca akārayi;",
  "anya-e0703n20:43_0": "Rajjaṁ vohārasamaye, majjhatto mittasattusu.",
  "anya-e0703n20:44_0": "15.",
  "anya-e0703n20:45_0": " Sayanassa siropasse, ghaṇṭaṁ sudīghayottakaṁ;",
  "anya-e0703n20:46_0": "Lambāpesi vīrāvetuṁ, icchantehi vinicchayaṁ.",
  "anya-e0703n20:47_0": "16.",
  "anya-e0703n20:48_0": " Eko putto ca dhītā ca, ahesuṁ tassa rājino;",
  "anya-e0703n20:49_0": "Rathena tissavāpiṁ so, gacchanto bhūmipālajo.",
  "anya-e0703n20:50_0": "17.",
  "anya-e0703n20:51_0": " Taruṇaṁ vacchakaṁ magge, nipannaṁ sahadhenukaṁ;",
  "anya-e0703n20:52_0": "Gīvaṁ akkammacakkena, asañcicca aghātayi.",
  "anya-e0703n20:53_0": "18.",
  "anya-e0703n20:54_0": " Gantvāna dhenughaṇṭaṁ taṁ, ghaṭṭesi ghaṭṭitāsayā;",
  "anya-e0703n20:55_0": "Rājā teneva cakkena, sīsaṁ puttassa chedayi.",
  "anya-e0703n20:56_0": "19.",
  "anya-e0703n20:57_0": " Dijapotaṁ tālarukkhe, eko sappo abhakkhayi;",
  "anya-e0703n20:58_0": "Tampotamātā sakuṇī, gantvā ghaṇṭamaghaṭṭayi.",
  "anya-e0703n20:59_0": "20.",
  "anya-e0703n20:60_0": " Āṇāpetvāna taṁ rājā, kucchiṁ tassa vidāḷiya;",
  "anya-e0703n20:61_0": "Potaṁ taṁ nīharāpetvā, tāle sappamasappayi.",
  "anya-e0703n20:62_0": "21.",
  "anya-e0703n20:63_0": " Ratanaggassa ratana-ttayassa guṇasārataṁ;",
  "anya-e0703n20:64_0": "Ajānantopi so rājā, cārittamanupālayaṁ.",
  "anya-e0703n20:65_0": "22.",
  "anya-e0703n20:66_0": " Cetiyadabbataṁ gantvā, bhikkhusaṅghaṁ pavāriya;",
  "anya-e0703n20:67_0": "Āgacchanto rathagato, rathassa yugakoṭiyā.",
  "anya-e0703n20:68_0": "23.",
  "anya-e0703n20:69_0": " Akāsi jinathūpassa,",
  "anya-e0703n20:70_0": "Ekadesassa bhañjanaṁ;",
  "anya-e0703n20:71_0": "Amaccā ‘‘deva thūpono,",
  "anya-e0703n20:72_0": "Tayā bhinno’ti āhu taṁ.",
  "anya-e0703n20:73_0": "24.",
  "anya-e0703n20:74_0": " Asañcicca kate‘pe’sa, rājā oruyha sandanā;",
  "anya-e0703n20:75_0": "‘‘Cakkena mama sīsampi, chindathā’ti pathesayi.",
  "anya-e0703n20:76_0": "25.",
  "anya-e0703n20:77_0": " ‘‘Parahiṁsaṁ mahārāja, satthā no neva icchati;",
  "anya-e0703n20:78_0": "Thūpaṁ pākatikaṁ katvā, khamāpehī’’ti āhu taṁ.",
  "anya-e0703n20:79_0": "26.",
  "anya-e0703n20:80_0": " Te ṭhapetuṁ pañcadasa, pāsāṇe patite tahiṁ;",
  "anya-e0703n20:81_0": "Kahāpaṇa sahassāni, adā pañcadase vaso.",
  "anya-e0703n20:82_0": "27.",
  "anya-e0703n20:83_0": " Akā mahallikā vīhiṁ, so setuṁ ātape khipi;",
  "anya-e0703n20:84_0": "Devo akāle vassitvā, tassā vihiṁ atemayi.",
  "anya-e0703n20:85_0": "28.",
  "anya-e0703n20:86_0": " Vīhiṁ gahetvā gantvā sā, ghaṇṭaṁ taṁ samaghaṭṭayi;",
  "anya-e0703n20:87_0": "Akālavassaṁ sutvā taṁ, vissajjetvā tamattikaṁ.",
  "anya-e0703n20:88_0": "29.",
  "anya-e0703n20:89_0": " Rājā dhammamhi vattanto, ‘‘kāle vassaṁ labhe’’iti;",
  "anya-e0703n20:90_0": "Tassā vinicchayatthāya, upavāsaṁ nipajji so.",
  "anya-e0703n20:91_0": "30.",
  "anya-e0703n20:92_0": " Baliggāhī devaputto, rañño tejena otthaṭo;",
  "anya-e0703n20:93_0": "Gantvā cātumahārāja-santikaṁ taṁ nivedayi.",
  "anya-e0703n20:94_0": "31.",
  "anya-e0703n20:95_0": " Te tamādāya gantvāna, sakkassa paṭivedayuṁ;",
  "anya-e0703n20:96_0": "Sakko pajjunnamāhuya, kāle vassaṁ upādiyi.",
  "anya-e0703n20:97_0": "32.",
  "anya-e0703n20:98_0": " Baliggāhī devaputto, rājino taṁ nivedayi;",
  "anya-e0703n20:99_0": "Tatoppabhuti taṁ rajje, divā devo na vassatha.",
  "anya-e0703n20:100_0": "33.",
  "anya-e0703n20:101_0": " Rattiṁ devo’nu sattāhaṁ, vassiyāmamhi majjhime;",
  "anya-e0703n20:102_0": "Puṇṇāna’hesuṁ sabbattha, khuddakā vāṭakānipi.",
  "anya-e0703n20:103_0": "34.",
  "anya-e0703n20:104_0": " Agatigamanadoso muttamattena eso,",
  "anya-e0703n20:105_0": "Anupahata kudiṭṭhipīdisiṁ pāpuṇī’ddhiṁ;",
  "anya-e0703n20:106_0": "Agatigamanadosaṁ suddhadiṭṭhisamāno,",
  "anya-e0703n20:107_0": "Kathamidhahi manusso buddhimā no jaheyyāti.",
  "anya-e0703n20:108_0": "Sujanappasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n20:109_0": "Pañcarājako nāma",
  "anya-e0703n20:110_0": "Ekavīsatimo paricchedo."
}