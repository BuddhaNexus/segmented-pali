{
  "pv27:0.1_0": "Petavatthu",
  "pv27:0.2_0": "Cūḷavagga",
  "pv27:0.3_0": "2. Sāṇavāsītherapetavatthu",
  "pv27:1.1_0": "Kuṇḍināgariyo thero,",
  "pv27:1.2_0": "sāṇavāsinivāsiko;",
  "pv27:1.3_0": "Poṭṭhapādoti nāmena,",
  "pv27:1.4_0": "samaṇo bhāvitindriyo.",
  "pv27:2.1_0": "Tassa mātā pitā bhātā,",
  "pv27:2.2_0": "duggatā yamalokikā;",
  "pv27:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv27:2.4_0": "petalokaṁ ito gatā.",
  "pv27:3.1_0": "Te duggatā sūcikaṭṭā,",
  "pv27:3.2_0": "kilantā naggino kisā;",
  "pv27:3.3_0": "Uttasantā mahattāsā,",
  "pv27:3.4_0": "na dassenti kurūrino.",
  "pv27:4.1_0": "Tassa bhātā vitaritvā,",
  "pv27:4.2_0": "naggo ekapathekako;",
  "pv27:4.3_0": "Catukuṇḍiko bhavitvāna,",
  "pv27:4.4_0": "therassa dassayītumaṁ.",
  "pv27:5.1_0": "Thero cāmanasikatvā,",
  "pv27:5.2_0": "tuṇhībhūto atikkami;",
  "pv27:5.3_0": "So ca viññāpayī theraṁ,",
  "pv27:5.4_0": "“bhātā petagato ahaṁ.",
  "pv27:6.1_0": "Mātā pitā ca te bhante,",
  "pv27:6.2_0": "duggatā yamalokikā;",
  "pv27:6.3_0": "Pāpakammaṁ karitvāna,",
  "pv27:6.4_0": "petalokaṁ ito gatā.",
  "pv27:7.1_0": "Te duggatā sūcikaṭṭā,",
  "pv27:7.2_0": "kilantā naggino kisā;",
  "pv27:7.3_0": "Uttasantā mahattāsā,",
  "pv27:7.4_0": "na dassenti kurūrino.",
  "pv27:8.1_0": "Anukampassu kāruṇiko,",
  "pv27:8.2_0": "datvā anvādisāhi no;",
  "pv27:8.3_0": "Tava dinnena dānena,",
  "pv27:8.4_0": "yāpessanti kurūrino”ti.",
  "pv27:9.1_0": "Thero caritvā piṇḍāya,",
  "pv27:9.2_0": "bhikkhū aññe ca dvādasa;",
  "pv27:9.3_0": "Ekajjhaṁ sannipatiṁsu,",
  "pv27:9.4_0": "bhattavissaggakāraṇā.",
  "pv27:10.1_0": "Thero sabbeva te āha,",
  "pv27:10.2_0": "“yathāladdhaṁ dadātha me;",
  "pv27:10.3_0": "Saṅghabhattaṁ karissāmi,",
  "pv27:10.4_0": "anukampāya ñātinaṁ”.",
  "pv27:11.1_0": "Niyyādayiṁsu therassa,",
  "pv27:11.2_0": "thero saṅghaṁ nimantayi;",
  "pv27:11.3_0": "Datvā anvādisi thero,",
  "pv27:11.4_0": "mātu pitu ca bhātuno;",
  "pv27:11.5_0": "“Idaṁ me ñātīnaṁ hotu,",
  "pv27:11.6_0": "sukhitā hontu ñātayo”.",
  "pv27:12.1_0": "Samanantarānuddiṭṭhe,",
  "pv27:12.2_0": "bhojanaṁ udapajjatha;",
  "pv27:12.3_0": "Suciṁ paṇītaṁ sampannaṁ,",
  "pv27:12.4_0": "anekarasabyañjanaṁ.",
  "pv27:13.1_0": "Tato uddassayī bhātā,",
  "pv27:13.2_0": "vaṇṇavā balavā sukhī;",
  "pv27:13.3_0": "“Pahūtaṁ bhojanaṁ bhante,",
  "pv27:13.4_0": "passa naggāmhase mayaṁ;",
  "pv27:13.5_0": "Tathā bhante parakkama,",
  "pv27:13.6_0": "yathā vatthaṁ labhāmase”ti.",
  "pv27:14.1_0": "Thero saṅkārakūṭamhā,",
  "pv27:14.2_0": "uccinitvāna nantake;",
  "pv27:14.3_0": "Pilotikaṁ paṭaṁ katvā,",
  "pv27:14.4_0": "saṅghe cātuddise adā.",
  "pv27:15.1_0": "Datvā anvādisī thero,",
  "pv27:15.2_0": "mātu pitu ca bhātuno;",
  "pv27:15.3_0": "“Idaṁ me ñātīnaṁ hotu,",
  "pv27:15.4_0": "sukhitā hontu ñātayo”.",
  "pv27:16.1_0": "Samanantarānuddiṭṭhe,",
  "pv27:16.2_0": "vatthāni udapajjisuṁ;",
  "pv27:16.3_0": "Tato suvatthavasano,",
  "pv27:16.4_0": "therassa dassayītumaṁ.",
  "pv27:17.1_0": "“Yāvatā nandarājassa,",
  "pv27:17.2_0": "vijitasmiṁ paṭicchadā;",
  "pv27:17.3_0": "Tato bahutarā bhante,",
  "pv27:17.4_0": "vatthānacchādanāni no.",
  "pv27:18.1_0": "Koseyyakambalīyāni,",
  "pv27:18.2_0": "khoma kappāsikāni ca;",
  "pv27:18.3_0": "Vipulā ca mahagghā ca,",
  "pv27:18.4_0": "tepākāsevalambare.",
  "pv27:19.1_0": "Te mayaṁ paridahāma,",
  "pv27:19.2_0": "yaṁ yaṁ hi manaso piyaṁ;",
  "pv27:19.3_0": "Tathā bhante parakkama,",
  "pv27:19.4_0": "yathā gehaṁ labhāmase”ti.",
  "pv27:20.1_0": "Thero paṇṇakuṭiṁ katvā,",
  "pv27:20.2_0": "saṅghe cātuddise adā;",
  "pv27:20.3_0": "Datvā anvādisī thero,",
  "pv27:20.4_0": "mātu pitu ca bhātuno;",
  "pv27:20.5_0": "“Idaṁ me ñātīnaṁ hotu,",
  "pv27:20.6_0": "sukhitā hontu ñātayo”.",
  "pv27:21.1_0": "Samanantarānuddiṭṭhe,",
  "pv27:21.2_0": "gharāni udapajjisuṁ;",
  "pv27:21.3_0": "Kūṭāgāranivesanā,",
  "pv27:21.4_0": "vibhattā bhāgaso mitā.",
  "pv27:22.1_0": "“Na manussesu īdisā,",
  "pv27:22.2_0": "yādisā no gharā idha;",
  "pv27:22.3_0": "Api dibbesu yādisā,",
  "pv27:22.4_0": "tādisā no gharā idha.",
  "pv27:23.1_0": "Daddallamānā ābhenti,",
  "pv27:23.2_0": "Samantā caturo disā;",
  "pv27:23.3_0": "Tathā bhante parakkama,",
  "pv27:23.4_0": "Yathā pānīyaṁ labhāmase”ti.",
  "pv27:24.1_0": "Thero karaṇaṁ pūretvā,",
  "pv27:24.2_0": "saṅghe cātuddise adā;",
  "pv27:24.3_0": "Datvā anvādisī thero,",
  "pv27:24.4_0": "mātu pitu ca bhātuno;",
  "pv27:24.5_0": "“Idaṁ me ñātīnaṁ hotu,",
  "pv27:24.6_0": "sukhitā hontu ñātayo”.",
  "pv27:25.1_0": "Samanantarānuddiṭṭhe,",
  "pv27:25.2_0": "pānīyaṁ udapajjatha;",
  "pv27:25.3_0": "Gambhīrā caturassā ca,",
  "pv27:25.4_0": "pokkharañño sunimmitā.",
  "pv27:26.1_0": "Sītodikā suppatitthā,",
  "pv27:26.2_0": "sītā appaṭigandhiyā;",
  "pv27:26.3_0": "Padumuppalasañchannā,",
  "pv27:26.4_0": "vārikiñjakkhapūritā.",
  "pv27:27.1_0": "Tattha nhatvā pivitvā ca,",
  "pv27:27.2_0": "therassa paṭidassayuṁ;",
  "pv27:27.3_0": "“Pahūtaṁ pānīyaṁ bhante,",
  "pv27:27.4_0": "pādā dukkhā phalanti no”.",
  "pv27:28.1_0": "“Āhiṇḍamānā khañjāma,",
  "pv27:28.2_0": "sakkhare kusakaṇṭake;",
  "pv27:28.3_0": "‘Tathā bhante parakkama,",
  "pv27:28.4_0": "yathā yānaṁ labhāmase’”ti.",
  "pv27:29.1_0": "Thero sipāṭikaṁ laddhā,",
  "pv27:29.2_0": "saṅghe cātuddise adā;",
  "pv27:29.3_0": "Datvā anvādisī thero,",
  "pv27:29.4_0": "mātu pitu ca bhātuno;",
  "pv27:29.5_0": "“Idaṁ me ñātīnaṁ hotu,",
  "pv27:29.6_0": "sukhitā hontu ñātayo”.",
  "pv27:30.1_0": "Samanantarānuddiṭṭhe,",
  "pv27:30.2_0": "petā rathena māgamuṁ;",
  "pv27:30.3_0": "“Anukampitamha bhadante,",
  "pv27:30.4_0": "bhattenacchādanena ca.",
  "pv27:31.1_0": "Gharena pānīyadānena,",
  "pv27:31.2_0": "yānadānena cūbhayaṁ;",
  "pv27:31.3_0": "Muniṁ kāruṇikaṁ loke,",
  "pv27:31.4_0": "bhante vanditumāgatā”ti.",
  "pv27:32.1_0": "Sāṇavāsītherapetavatthu dutiyaṁ."
}