{
  "atk-s0402a45:0_0": "(10) 5. Asuravaggo",
  "atk-s0402a45:1_0": "1. Asurasuttavaṇṇanā",
  "atk-s0402a45:2_0": "91.",
  "atk-s0402a45:2_1": "Pañcamassa paṭhame asuroti asurasadiso bībhaccho.",
  "atk-s0402a45:2_2": "Devoti devasadiso guṇavasena abhirūpo pāsādiko.",
  "atk-s0402a45:3_0": "2. Paṭhamasamādhisuttavaṇṇanā",
  "atk-s0402a45:4_0": "92.",
  "atk-s0402a45:4_1": "Dutiye ajjhattaṁ cetosamathassāti niyakajjhatte appanācittasamādhissa.",
  "atk-s0402a45:4_2": "Adhipaññādhammavipassanāyāti saṅkhārapariggāhakavipassanāñāṇassa.",
  "atk-s0402a45:4_3": "Tañhi adhipaññāsaṅkhātañca,",
  "atk-s0402a45:4_4": "pañcakkhandhasaṅkhātesu ca dhammesu vipassanābhūtaṁ,",
  "atk-s0402a45:4_5": "tasmā “adhipaññādhammavipassanā”ti vuccatīti.",
  "atk-s0402a45:5_0": "3. Dutiyasamādhisuttavaṇṇanā",
  "atk-s0402a45:6_0": "93.",
  "atk-s0402a45:6_1": "Tatiye yogo karaṇīyoti yuttappayuttatā kattabbā.",
  "atk-s0402a45:6_2": "Chandoti kattukamyatāchando.",
  "atk-s0402a45:6_3": "Vāyāmoti payogo.",
  "atk-s0402a45:6_4": "Ussāhoti tato adhimattataraṁ vīriyaṁ.",
  "atk-s0402a45:6_5": "Ussoḷhīti paṅkalaggasakaṭauddharaṇasadisaṁ mahāvīriyaṁ.",
  "atk-s0402a45:6_6": "Appaṭivānīti anivattanatā.",
  "atk-s0402a45:7_0": "4. Tatiyasamādhisuttavaṇṇanā",
  "atk-s0402a45:8_0": "94.",
  "atk-s0402a45:8_1": "Catutthe evaṁ kho, āvuso,",
  "atk-s0402a45:8_2": "saṅkhārā daṭṭhabbātiādīsu, āvuso,",
  "atk-s0402a45:8_3": "saṅkhārā nāma aniccato daṭṭhabbā,",
  "atk-s0402a45:8_4": "aniccato sammasitabbā,",
  "atk-s0402a45:8_5": "aniccato passitabbā.",
  "atk-s0402a45:8_6": "Tathā dukkhato,",
  "atk-s0402a45:8_7": "anattatoti evaṁ attho daṭṭhabbo. Evaṁ kho, āvuso,",
  "atk-s0402a45:8_8": "cittaṁ saṇṭhapetabbantiādīsupi paṭhamajjhānavasena, āvuso,",
  "atk-s0402a45:8_9": "cittaṁ saṇṭhapetabbaṁ paṭhamajjhānavasena sannisādetabbaṁ,",
  "atk-s0402a45:8_10": "paṭhamajjhānavasena ekodi kātabbaṁ,",
  "atk-s0402a45:8_11": "paṭhamajjhānavasena samādahitabbaṁ.",
  "atk-s0402a45:8_12": "Tathā dutiyajjhānādivasenāti evaṁ attho daṭṭhabbo.",
  "atk-s0402a45:8_13": "Imesu tīsupi suttesu samathavipassanā lokiyalokuttarāva kathitā.",
  "atk-s0402a45:9_0": "5. Chavālātasuttavaṇṇanā",
  "atk-s0402a45:10_0": "95.",
  "atk-s0402a45:10_1": "Pañcame chavālātanti susāne alātaṁ.",
  "atk-s0402a45:10_2": "Majjhegūthagatanti majjhaṭṭhāne gūthamakkhitaṁ.",
  "atk-s0402a45:10_3": "Neva gāme kaṭṭhatthaṁ pharatīti kūṭagopānasithambhasopānādīnaṁ atthāya anupaneyyatāya gāme na kaṭṭhatthaṁ sādheti,",
  "atk-s0402a45:10_4": "khettakuṭipādaṁ vā mañcapādaṁ vā kātuṁ anupaneyyatāya na araññe kaṭṭhatthaṁ sādheti.",
  "atk-s0402a45:10_5": "Dvīsu koṭīsu gayhamānaṁ hatthaṁ ḍahati,",
  "atk-s0402a45:10_6": "majjhe gayhamānaṁ gūthena makkheti.",
  "atk-s0402a45:10_7": "Tathūpamanti taṁsarikkhakaṁ.",
  "atk-s0402a45:10_8": "Abhikkantataroti sundarataro.",
  "atk-s0402a45:10_9": "Paṇītataroti uttamataro.",
  "atk-s0402a45:10_10": "Gavā khīranti gāvito khīraṁ.",
  "atk-s0402a45:10_11": "Khīramhā dadhītiādīsu paraṁ paraṁ purimato purimato aggaṁ,",
  "atk-s0402a45:10_12": "sappimaṇḍo pana tesu sabbesupi aggameva.",
  "atk-s0402a45:10_13": "Aggotiādīsu guṇehi aggo ceva seṭṭho ca pamukho ca uttamo ca pavaro cāti veditabbo.",
  "atk-s0402a45:10_14": "Chavālātūpamāya na dussīlo puggalo kathito,",
  "atk-s0402a45:10_15": "appassuto pana vissaṭṭhakammanto goṇasadiso puggalo kathitoti veditabbo.",
  "atk-s0402a45:10_16": "Chaṭṭhe sabbaṁ uttānatthameva.",
  "atk-s0402a45:11_0": "7. Khippanisantisuttavaṇṇanā",
  "atk-s0402a45:12_0": "97.",
  "atk-s0402a45:12_1": "Sattame khippanisantīti khippanisāmano sīghaṁ jānituṁ samattho.",
  "atk-s0402a45:12_2": "Sutānañca dhammānanti sutappaguṇānaṁ tantidhammānaṁ.",
  "atk-s0402a45:12_3": "Atthūpaparikkhīti atthaṁ upaparikkhako.",
  "atk-s0402a45:12_4": "Atthamaññāya dhammamaññāyāti aṭṭhakathañca pāḷiñca jānitvā.",
  "atk-s0402a45:12_5": "Dhammānudhammappaṭipanno hotīti navalokuttaradhammānaṁ anurūpadhammabhūtaṁ sasīlakaṁ pubbabhāgappaṭipadaṁ paṭipanno hoti.",
  "atk-s0402a45:12_6": "No ca kalyāṇavācoti na sundaravacano.",
  "atk-s0402a45:12_7": "Na kalyāṇavākkaraṇoti na sundaravacanaghoso hoti.",
  "atk-s0402a45:12_8": "Poriyātiādīhi saddhiṁ no-kāro yojetabboyeva.",
  "atk-s0402a45:12_9": "Guṇaparipuṇṇāya apalibuddhāya adosāya agaḷitapadabyañjanāya atthaṁ viññāpetuṁ samatthāya vācāya samannāgato na hotīti attho.",
  "atk-s0402a45:12_10": "Iminā upāyena sabbattha attho veditabbo.",
  "atk-s0402a45:13_0": "8. Attahitasuttavaṇṇanā",
  "atk-s0402a45:14_0": "98-99.",
  "atk-s0402a45:14_1": "Aṭṭhamaṁ puggalajjhāsayavasenāpi dasabalassa desanāñāṇavilāsenāpi kathitaṁ,",
  "atk-s0402a45:14_2": "navamaṁ pañcaveravasena.",
  "atk-s0402a45:15_0": "10. Potaliyasuttavaṇṇanā",
  "atk-s0402a45:16_0": "100.",
  "atk-s0402a45:16_1": "Dasame kālenāti yuttappattakālena.",
  "atk-s0402a45:16_2": "Khamatīti ruccati.",
  "atk-s0402a45:16_3": "Yadidaṁ tattha tattha kālaññutāti yā esā tattha tattha kālaṁ jānanā.",
  "atk-s0402a45:16_4": "Taṁ taṁ kālaṁ ñatvā hi avaṇṇārahassa avaṇṇakathanaṁ vaṇṇārahassa ca vaṇṇakathanaṁ paṇḍitānaṁ pakatīti dasseti.",
  "atk-s0402a45:17_0": "Asuravaggo pañcamo.",
  "atk-s0402a45:18_0": "Dutiyapaṇṇāsakaṁ niṭṭhitaṁ.",
  "atk-s0402a45:19_0": "3. Tatiyapaṇṇāsakaṁ"
}