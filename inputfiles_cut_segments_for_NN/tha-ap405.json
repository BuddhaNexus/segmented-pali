{
  "tha-ap405:0.1_0": "Therāpadāna",
  "tha-ap405:0.2_0": "Metteyyavagga",
  "tha-ap405:0.3_0": "3. Mettaguttheraapadāna",
  "tha-ap405:1.1_0": "“Himavantassāvidūre,",
  "tha-ap405:1.2_0": "asoko nāma pabbato;",
  "tha-ap405:1.3_0": "Tatthāsi assamo mayhaṁ,",
  "tha-ap405:1.4_0": "vissakammena māpito.",
  "tha-ap405:2.1_0": "Sumedho nāma sambuddho,",
  "tha-ap405:2.2_0": "aggo kāruṇiko muni;",
  "tha-ap405:2.3_0": "Nivāsayitvā pubbaṇhe,",
  "tha-ap405:2.4_0": "piṇḍāya me upāgami.",
  "tha-ap405:3.1_0": "Upāgataṁ mahāvīraṁ,",
  "tha-ap405:3.2_0": "sumedhaṁ lokanāyakaṁ;",
  "tha-ap405:3.3_0": "Paggayha sugatapattaṁ,",
  "tha-ap405:3.4_0": "sappitelaṁ apūrayiṁ.",
  "tha-ap405:4.1_0": "Datvānahaṁ buddhaseṭṭhe,",
  "tha-ap405:4.2_0": "sumedhe lokanāyake;",
  "tha-ap405:4.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap405:4.4_0": "bhiyyo hāsaṁ janesahaṁ.",
  "tha-ap405:5.1_0": "Iminā sappidānena,",
  "tha-ap405:5.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap405:5.3_0": "Devabhūto manusso vā,",
  "tha-ap405:5.4_0": "labhāmi vipulaṁ sukhaṁ.",
  "tha-ap405:6.1_0": "Vinipātaṁ vivajjetvā,",
  "tha-ap405:6.2_0": "saṁsarāmi bhavābhave;",
  "tha-ap405:6.3_0": "Tattha cittaṁ paṇidhitvā,",
  "tha-ap405:6.4_0": "labhāmi acalaṁ padaṁ.",
  "tha-ap405:7.1_0": "‘Lābhā tuyhaṁ suladdhaṁ te,",
  "tha-ap405:7.2_0": "yaṁ maṁ addakkhi brāhmaṇa;",
  "tha-ap405:7.3_0": "Mama dassanamāgamma,",
  "tha-ap405:7.4_0": "arahattaṁ bhavissati.",
  "tha-ap405:8.1_0": "Vissattho hohi mā bhāyi,",
  "tha-ap405:8.2_0": "adhigantvā mahāyasaṁ;",
  "tha-ap405:8.3_0": "Mamañhi sappiṁ datvāna,",
  "tha-ap405:8.4_0": "parimokkhasi jātiyā’.",
  "tha-ap405:9.1_0": "Iminā sappidānena,",
  "tha-ap405:9.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap405:9.3_0": "Devabhūto manusso vā,",
  "tha-ap405:9.4_0": "labhase vipulaṁ sukhaṁ.",
  "tha-ap405:10.1_0": "Iminā sappidānena,",
  "tha-ap405:10.2_0": "mettacittavatāya ca;",
  "tha-ap405:10.3_0": "Aṭṭhārase kappasate,",
  "tha-ap405:10.4_0": "devaloke ramissasi.",
  "tha-ap405:11.1_0": "Aṭṭhatiṁsatikkhattuñca,",
  "tha-ap405:11.2_0": "devarājā bhavissasi;",
  "tha-ap405:11.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap405:11.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap405:12.1_0": "Ekapaññāsakkhattuñca,",
  "tha-ap405:12.2_0": "cakkavattī bhavissasi;",
  "tha-ap405:12.3_0": "Cāturanto vijitāvī,",
  "tha-ap405:12.4_0": "jambumaṇḍassa issaro.",
  "tha-ap405:13.1_0": "Mahāsamuddovakkhobho,",
  "tha-ap405:13.2_0": "duddharo pathavī yathā;",
  "tha-ap405:13.3_0": "Evamevaṁ ca te bhogā,",
  "tha-ap405:13.4_0": "appameyyā bhavissare.",
  "tha-ap405:14.1_0": "Saṭṭhikoṭī hiraññassa,",
  "tha-ap405:14.2_0": "cajitvā pabbajiṁ ahaṁ;",
  "tha-ap405:14.3_0": "Kiṁ kusalaṁ gavesanto,",
  "tha-ap405:14.4_0": "bāvariṁ upasaṅkamiṁ.",
  "tha-ap405:15.1_0": "Tattha mante adhīyāmi,",
  "tha-ap405:15.2_0": "chaḷaṅgaṁ nāma lakkhaṇaṁ;",
  "tha-ap405:15.3_0": "Tamandhakāraṁ vidhamaṁ,",
  "tha-ap405:15.4_0": "uppajji tvaṁ mahāmuni.",
  "tha-ap405:16.1_0": "Tava dassanakāmohaṁ,",
  "tha-ap405:16.2_0": "āgatomhi mahāmuni;",
  "tha-ap405:16.3_0": "Tava dhammaṁ suṇitvāna,",
  "tha-ap405:16.4_0": "pattomhi acalaṁ padaṁ.",
  "tha-ap405:17.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap405:17.2_0": "sappiṁ buddhassadāsahaṁ;",
  "tha-ap405:17.3_0": "Etthantare nābhijāne,",
  "tha-ap405:17.4_0": "sappiṁ viññāpitaṁ mayā.",
  "tha-ap405:18.1_0": "Mama saṅkappamaññāya,",
  "tha-ap405:18.2_0": "uppajjati yadicchakaṁ;",
  "tha-ap405:18.3_0": "Cittamaññāya nibbattaṁ,",
  "tha-ap405:18.4_0": "sabbe santappayāmahaṁ.",
  "tha-ap405:19.1_0": "Aho buddhā aho dhammā,",
  "tha-ap405:19.2_0": "aho no satthu sampadā;",
  "tha-ap405:19.3_0": "Thokañhi sappiṁ datvāna,",
  "tha-ap405:19.4_0": "appameyyaṁ labhāmahaṁ.",
  "tha-ap405:20.1_0": "Mahāsamudde udakaṁ,",
  "tha-ap405:20.2_0": "yāvatā nerupassato;",
  "tha-ap405:20.3_0": "Mama sappiṁ upādāya,",
  "tha-ap405:20.4_0": "kalabhāgaṁ na hessati.",
  "tha-ap405:21.1_0": "Yāvatā cakkavāḷassa,",
  "tha-ap405:21.2_0": "kariyantassa rāsito;",
  "tha-ap405:21.3_0": "Mama nibbattavatthānaṁ,",
  "tha-ap405:21.4_0": "okāso so na sammati.",
  "tha-ap405:22.1_0": "Pabbatarājā himavā,",
  "tha-ap405:22.2_0": "pavaropi siluccayo;",
  "tha-ap405:22.3_0": "Mamānulittagandhassa,",
  "tha-ap405:22.4_0": "upanidhiṁ na hessati.",
  "tha-ap405:23.1_0": "Vatthaṁ gandhañca sappiñca,",
  "tha-ap405:23.2_0": "aññañca diṭṭhadhammikaṁ;",
  "tha-ap405:23.3_0": "Asaṅkhatañca nibbānaṁ,",
  "tha-ap405:23.4_0": "sappidānassidaṁ phalaṁ.",
  "tha-ap405:24.1_0": "Satipaṭṭhānasayano,",
  "tha-ap405:24.2_0": "samādhijhānagocaro;",
  "tha-ap405:24.3_0": "Bojjhaṅgabhojano ajja,",
  "tha-ap405:24.4_0": "sappidānassidaṁ phalaṁ.",
  "tha-ap405:25.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap405:25.2_0": "…pe…",
  "tha-ap405:25.3_0": "viharāmi anāsavo.",
  "tha-ap405:26.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap405:26.2_0": "…pe…",
  "tha-ap405:26.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap405:27.1_0": "Paṭisambhidā catasso,",
  "tha-ap405:27.2_0": "…pe…",
  "tha-ap405:27.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap405:28.1_0": "Itthaṁ sudaṁ āyasmā mettagū thero imā gāthāyo abhāsitthāti.",
  "tha-ap405:29.1_0": "Mettaguttherassāpadānaṁ tatiyaṁ."
}