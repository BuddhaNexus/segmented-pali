{
  "iti47:0.1_0": "Itivuttaka 47",
  "iti47:0.2_0": "Dukanipāta",
  "iti47:0.3_0": "Dutiyavagga",
  "iti47:0.4_0": "Jāgariyasutta",
  "iti47:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti47:2.1_0": "“Jāgaro cassa, bhikkhave,",
  "iti47:2.1_1": "bhikkhu vihareyya sato sampajāno samāhito pamudito vippasanno ca tattha kālavipassī ca kusalesu dhammesu.",
  "iti47:2.2_0": "Jāgarassa, bhikkhave,",
  "iti47:2.2_1": "bhikkhuno viharato satassa sampajānassa samāhitassa pamuditassa vippasannassa tattha kālavipassino kusalesu dhammesu dvinnaṁ phalānaṁ aññataraṁ phalaṁ pāṭikaṅkhaṁ—",
  "iti47:2.3_0": "diṭṭheva dhamme aññā,",
  "iti47:2.3_1": "sati vā upādisese anāgāmitā”ti.",
  "iti47:2.4_0": "Etamatthaṁ bhagavā avoca.",
  "iti47:2.5_0": "Tatthetaṁ iti vuccati:",
  "iti47:3.1_0": "“Jāgarantā suṇāthetaṁ,",
  "iti47:3.2_0": "ye suttā te pabujjhatha;",
  "iti47:3.3_0": "Suttā jāgaritaṁ seyyo,",
  "iti47:3.4_0": "natthi jāgarato bhayaṁ.",
  "iti47:4.1_0": "Yo jāgaro ca satimā sampajāno,",
  "iti47:4.2_0": "Samāhito mudito vippasanno ca;",
  "iti47:4.3_0": "Kālena so sammā dhammaṁ parivīmaṁsamāno,",
  "iti47:4.4_0": "Ekodibhūto vihane tamaṁ so.",
  "iti47:5.1_0": "Tasmā have jāgariyaṁ bhajetha,",
  "iti47:5.2_0": "Ātāpī bhikkhu nipako jhānalābhī;",
  "iti47:5.3_0": "Saṁyojanaṁ jātijarāya chetvā,",
  "iti47:5.4_0": "Idheva sambodhimanuttaraṁ phuse”ti.",
  "iti47:6.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti47:6.2_0": "Dasamaṁ."
}