{
  "tika-abh02t31:0_0": "14. Sikkhāpadavibhaṅgo",
  "tika-abh02t31:1_0": "1. Abhidhammabhājanīyavaṇṇanā",
  "tika-abh02t31:2_0": "703.",
  "tika-abh02t31:2_1": "Sikkhāsaṅkhātānaṁ kusaladhammānaṁ pañca sīlaṅgāni nissayabhāvena vā patiṭṭhā siyuṁ,",
  "tika-abh02t31:2_2": "upanissayabhāvena vāti tadubhayaṁ dassento āha “sampayogavasena,",
  "tika-abh02t31:2_3": "upanissayavasena ca okāsabhāvenā”ti.",
  "tika-abh02t31:3_0": "704.",
  "tika-abh02t31:3_1": "“Kammapathā evā”ti niyamassa katattā vuttaṁ “asabbasādhāraṇesū”ti.",
  "tika-abh02t31:3_2": "Na hi sakkā indriyādisādhāraṇakoṭṭhāsavasena niyamaṁ kātuṁ.",
  "tika-abh02t31:3_3": "Kammapathakoṭṭhāsikā eva,",
  "tika-abh02t31:3_4": "na jhānādikoṭṭhāsikā.",
  "tika-abh02t31:3_5": "Kammapathabhāvena āgatanti vadanti,",
  "tika-abh02t31:3_6": "duggatiyā,",
  "tika-abh02t31:3_7": "tattha uppajjanadukkhassa ca pavattiupāyabhāvatoti adhippāyo.",
  "tika-abh02t31:3_8": "Assa surāpānassa.",
  "tika-abh02t31:3_9": "Upakārakattaṁ sabbesaṁ.",
  "tika-abh02t31:3_10": "Sabhāgattaṁ micchācārassa.",
  "tika-abh02t31:4_0": "Tathāgahitasaṅkhārārammaṇatāyāti “sattaṁ avaharāmi,",
  "tika-abh02t31:4_1": "satte vippaṭipajjāmī”tiādinā sattākārena gahitasaṅkhārārammaṇatāya,",
  "tika-abh02t31:4_2": "na pana sattapaññattiārammaṇatāyāti adhippāyo.",
  "tika-abh02t31:4_3": "“Pañca sikkhāpadā”tiādinā tamevatthaṁ vivarati.",
  "tika-abh02t31:5_0": "Tassa tassāti yassa yassa byasanatthāya.",
  "tika-abh02t31:5_1": "Sayaṁ vā usuādiṁ khipati,",
  "tika-abh02t31:5_2": "opātakhaṇanādiṁ karoti,",
  "tika-abh02t31:5_3": "tādisaṁ mantaṁ parijappati,",
  "tika-abh02t31:5_4": "kammajaiddhiṁ vaḷañjeti,",
  "tika-abh02t31:5_5": "aññena vā taṁ sabbaṁ kāretīti āha “nissaggiya…pe…",
  "tika-abh02t31:5_6": "dve eva gahitā”ti.",
  "tika-abh02t31:6_0": "Yadipi koṭṭhāsavāre virati sarūpena nāgatā “yevāpanā”tveva vuttā,",
  "tika-abh02t31:6_1": "bhajāpiyamānā pana maggabhāvaṁyeva bhajatīti āha “viratisīlaṁ pana maggakoṭṭhāsika”nti.",
  "tika-abh02t31:6_2": "Sesasīlānanti sesaavītikkantasīlānaṁ.",
  "tika-abh02t31:7_0": "712.Abhabbaṭṭhānāti pāṇātipātādayo.",
  "tika-abh02t31:7_1": "Yathā pāṇātipātādayo verahetutāya veraṁ,",
  "tika-abh02t31:7_2": "evaṁ tadaññepi akusalāti vuttaṁ “taṁsabhāgatāya verabhūtāna”nti.",
  "tika-abh02t31:7_3": "Viratīnaṁ uppatti na na bhavissati sekkhānanti yojanā.",
  "tika-abh02t31:7_4": "“Akusalasamuṭṭhitāni cā”tiādināpi sekkhānaṁ ubhayena viratisabbhāvaṁyeva vibhāveti.",
  "tika-abh02t31:7_5": "Tassattho –",
  "tika-abh02t31:7_6": "yāni akusalasamuṭṭhitāni kāyakammādīni,",
  "tika-abh02t31:7_7": "tāni tesaṁ sekkhānaṁ kāyaduccaritādīnīti verāniyeva,",
  "tika-abh02t31:7_8": "tehi verehi tesaṁ sekkhānaṁ viratiyo sambhavantiyeva.",
  "tika-abh02t31:7_9": "Yatoti yasmā pāṇātipātādiviramitabbanippariyāyaverābhāvepi kāyaduccaritādiveramattato sekkhānaṁ viratisambhavato.",
  "tika-abh02t31:7_10": "Naphalabhūtassāpīti yathā phalassa maggapaṭibimbabhūtattā maggasadisaṁ sattaaṭṭhaṅgikatā siyā,",
  "tika-abh02t31:7_11": "evaṁ aphalabhūtassāpi sakadāgāmimaggādikassa yato viratisambhavato aṭṭhaṅgikatā hoti,",
  "tika-abh02t31:7_12": "aññathā pañcaṅgiko eva siyāti adhippāyo.",
  "tika-abh02t31:8_0": "Abhidhammabhājanīyavaṇṇanā niṭṭhitā.",
  "tika-abh02t31:9_0": "2. Pañhapucchakavaṇṇanā",
  "tika-abh02t31:10_0": "714.Yathāviramitabbatoti yo yo pāṇātipātādi viramitabbo, tato virativasena.",
  "tika-abh02t31:11_0": "Pañhapucchakavaṇṇanā niṭṭhitā.",
  "tika-abh02t31:12_0": "Sikkhāpadavibhaṅgavaṇṇanā niṭṭhitā."
}