{
  "tha-ap16:0.1_0": "Therāpadāna",
  "tha-ap16:0.2_0": "Sīhāsaniyavagga",
  "tha-ap16:0.3_0": "4 Cūḷapanthakattheraapadāna",
  "tha-ap16:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap16:1.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap16:1.3_0": "Gaṇamhā vūpakaṭṭho so,",
  "tha-ap16:1.4_0": "himavante vasī tadā.",
  "tha-ap16:2.1_0": "Ahampi himavantamhi,",
  "tha-ap16:2.2_0": "vasāmi assame tadā;",
  "tha-ap16:2.3_0": "Acirāgataṁ mahāvīraṁ,",
  "tha-ap16:2.4_0": "upesiṁ lokanāyakaṁ.",
  "tha-ap16:3.1_0": "Pupphacchattaṁ gahetvāna,",
  "tha-ap16:3.2_0": "upagacchiṁ narāsabhaṁ;",
  "tha-ap16:3.3_0": "Samādhiṁ samāpajjantaṁ,",
  "tha-ap16:3.4_0": "antarāyamakāsahaṁ.",
  "tha-ap16:4.1_0": "Ubho hatthehi paggayha,",
  "tha-ap16:4.2_0": "pupphacchattaṁ adāsahaṁ;",
  "tha-ap16:4.3_0": "Paṭiggahesi bhagavā,",
  "tha-ap16:4.4_0": "padumuttaro mahāmuni.",
  "tha-ap16:5.1_0": "Sabbe devā attamanā,",
  "tha-ap16:5.2_0": "himavantaṁ upenti te;",
  "tha-ap16:5.3_0": "Sādhukāraṁ pavattesuṁ,",
  "tha-ap16:5.4_0": "anumodissati cakkhumā.",
  "tha-ap16:6.1_0": "Idaṁ vatvāna te devā,",
  "tha-ap16:6.2_0": "upagacchuṁ naruttamaṁ;",
  "tha-ap16:6.3_0": "Ākāse dhārayantassa,",
  "tha-ap16:6.4_0": "padumacchattamuttamaṁ.",
  "tha-ap16:7.1_0": "Satapattachattaṁ paggayha,",
  "tha-ap16:7.2_0": "adāsi tāpaso mama;",
  "tha-ap16:7.3_0": "‘Tamahaṁ kittayissāmi,",
  "tha-ap16:7.4_0": "suṇātha mama bhāsato.",
  "tha-ap16:8.1_0": "Pañcavīsatikappāni,",
  "tha-ap16:8.2_0": "devarajjaṁ karissati;",
  "tha-ap16:8.3_0": "Catuttiṁsatikkhattuñca,",
  "tha-ap16:8.4_0": "cakkavattī bhavissati.",
  "tha-ap16:9.1_0": "Yaṁ yaṁ yoniṁ saṁsarati,",
  "tha-ap16:9.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap16:9.3_0": "Abbhokāse patiṭṭhantaṁ,",
  "tha-ap16:9.4_0": "padumaṁ dhārayissati.",
  "tha-ap16:10.1_0": "Kappasatasahassamhi,",
  "tha-ap16:10.2_0": "okkākakulasambhavo;",
  "tha-ap16:10.3_0": "Gotamo nāma gottena,",
  "tha-ap16:10.4_0": "satthā loke bhavissati.",
  "tha-ap16:11.1_0": "Pakāsite pāvacane,",
  "tha-ap16:11.2_0": "manussattaṁ labhissati;",
  "tha-ap16:11.3_0": "Manomayamhi kāyamhi,",
  "tha-ap16:11.4_0": "uttamo so bhavissati.",
  "tha-ap16:12.1_0": "Dve bhātaro bhavissanti,",
  "tha-ap16:12.2_0": "ubhopi panthakavhayā;",
  "tha-ap16:12.3_0": "Anubhotvā uttamatthaṁ,",
  "tha-ap16:12.4_0": "jotayissanti sāsanaṁ’.",
  "tha-ap16:13.1_0": "Sohaṁ aṭṭhārasavasso,",
  "tha-ap16:13.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap16:13.3_0": "Visesāhaṁ na vindāmi,",
  "tha-ap16:13.4_0": "sakyaputtassa sāsane.",
  "tha-ap16:14.1_0": "Dandhā mayhaṁ gatī āsi,",
  "tha-ap16:14.2_0": "paribhūto pure ahuṁ;",
  "tha-ap16:14.3_0": "Bhātā ca maṁ paṇāmesi,",
  "tha-ap16:14.4_0": "gaccha dāni sakaṁ gharaṁ.",
  "tha-ap16:15.1_0": "Sohaṁ paṇāmito santo,",
  "tha-ap16:15.2_0": "saṅghārāmassa koṭṭhake;",
  "tha-ap16:15.3_0": "Dummano tattha aṭṭhāsiṁ,",
  "tha-ap16:15.4_0": "sāmaññasmiṁ apekkhavā.",
  "tha-ap16:16.1_0": "Bhagavā tattha āgacchi,",
  "tha-ap16:16.2_0": "sīsaṁ mayhaṁ parāmasi;",
  "tha-ap16:16.3_0": "Bāhāya maṁ gahetvāna,",
  "tha-ap16:16.4_0": "saṅghārāmaṁ pavesayi.",
  "tha-ap16:17.1_0": "Anukampāya me satthā,",
  "tha-ap16:17.2_0": "adāsi pādapuñchaniṁ;",
  "tha-ap16:17.3_0": "Evaṁ suddhaṁ adhiṭṭhehi,",
  "tha-ap16:17.4_0": "ekamantamadhiṭṭhahaṁ.",
  "tha-ap16:18.1_0": "Hatthehi tamahaṁ gayha,",
  "tha-ap16:18.2_0": "sariṁ kokanadaṁ ahaṁ;",
  "tha-ap16:18.3_0": "Tattha cittaṁ vimucci me,",
  "tha-ap16:18.4_0": "arahattaṁ apāpuṇiṁ.",
  "tha-ap16:19.1_0": "Manomayesu kāyesu,",
  "tha-ap16:19.2_0": "sabbattha pāramiṁ gato;",
  "tha-ap16:19.3_0": "Sabbāsave pariññāya,",
  "tha-ap16:19.4_0": "viharāmi anāsavo.",
  "tha-ap16:20.1_0": "Paṭisambhidā catasso,",
  "tha-ap16:20.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap16:20.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap16:20.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap16:21.1_0": "Itthaṁ sudaṁ āyasmā cūḷapanthako thero imā gāthāyo abhāsitthāti.",
  "tha-ap16:22.1_0": "Cūḷapanthakattherassāpadānaṁ catutthaṁ."
}