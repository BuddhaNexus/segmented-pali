{
  "vv78:0.1_0": "Vimānavatthu",
  "vv78:0.2_0": "Purisavimāna",
  "vv78:0.3_0": "Sunikkhittavagga",
  "vv78:0.4_0": "4. Suvaṇṇavimānavatthu",
  "vv78:1.1_0": "“Sovaṇṇamaye pabbatasmiṁ,",
  "vv78:1.2_0": "vimānaṁ sabbatopabhaṁ;",
  "vv78:1.3_0": "Hemajālapaṭicchannaṁ,",
  "vv78:1.4_0": "kiṅkiṇijālakappitaṁ.",
  "vv78:2.1_0": "Aṭṭhaṁsā sukatā thambhā,",
  "vv78:2.2_0": "sabbe veḷuriyāmayā;",
  "vv78:2.3_0": "Ekamekāya aṁsiyā,",
  "vv78:2.4_0": "ratanā satta nimmitā.",
  "vv78:3.1_0": "Veḷuriyasuvaṇṇassa,",
  "vv78:3.2_0": "phalikā rūpiyassa ca;",
  "vv78:3.3_0": "Masāragallamuttāhi,",
  "vv78:3.4_0": "lohitaṅgamaṇīhi ca.",
  "vv78:4.1_0": "Citrā manoramā bhūmi,",
  "vv78:4.2_0": "na tatthuddhaṁsatī rajo;",
  "vv78:4.3_0": "Gopānasīgaṇā pītā,",
  "vv78:4.4_0": "kūṭaṁ dhārenti nimmitā.",
  "vv78:5.1_0": "Sopānāni ca cattāri,",
  "vv78:5.2_0": "nimmitā caturo disā;",
  "vv78:5.3_0": "Nānāratanagabbhehi,",
  "vv78:5.4_0": "ādiccova virocati.",
  "vv78:6.1_0": "Vediyā catasso tattha,",
  "vv78:6.2_0": "vibhattā bhāgaso mitā;",
  "vv78:6.3_0": "Daddallamānā ābhanti,",
  "vv78:6.4_0": "samantā caturo disā.",
  "vv78:7.1_0": "Tasmiṁ vimāne pavare,",
  "vv78:7.2_0": "devaputto mahappabho;",
  "vv78:7.3_0": "Atirocasi vaṇṇena,",
  "vv78:7.4_0": "udayantova bhāṇumā.",
  "vv78:8.1_0": "Dānassa te idaṁ phalaṁ,",
  "vv78:8.2_0": "atho sīlassa vā pana;",
  "vv78:8.3_0": "Atho añjalikammassa,",
  "vv78:8.4_0": "taṁ me akkhāhi pucchito”.",
  "vv78:9.1_0": "So devaputto attamano,",
  "vv78:9.2_0": "…pe…",
  "vv78:9.3_0": "yassa kammassidaṁ phalaṁ.",
  "vv78:10.1_0": "“Ahaṁ andhakavindasmiṁ,",
  "vv78:10.2_0": "buddhassādiccabandhuno;",
  "vv78:10.3_0": "Vihāraṁ satthu kāresiṁ,",
  "vv78:10.4_0": "pasanno sehi pāṇibhi.",
  "vv78:11.1_0": "Tattha gandhañca mālañca,",
  "vv78:11.2_0": "paccayañca vilepanaṁ;",
  "vv78:11.3_0": "Vihāraṁ satthu adāsiṁ,",
  "vv78:11.4_0": "vippasannena cetasā;",
  "vv78:11.5_0": "Tena mayhaṁ idaṁ laddhaṁ,",
  "vv78:11.6_0": "vasaṁ vattemi nandane.",
  "vv78:12.1_0": "Nandane ca vane ramme,",
  "vv78:12.2_0": "nānādijagaṇāyute;",
  "vv78:12.3_0": "Ramāmi naccagītehi,",
  "vv78:12.4_0": "accharāhi purakkhato”ti.",
  "vv78:13.1_0": "Suvaṇṇavimānaṁ catutthaṁ."
}