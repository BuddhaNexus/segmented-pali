{
  "mil5.2.7:0.1_0": "Milindapañha",
  "mil5.2.7:0.2_0": "Meṇḍakapañha",
  "mil5.2.7:0.3_0": "Abhejjavagga",
  "mil5.2.7:0.4_0": "7. Bhikkhusaṅghapariharaṇapañha",
  "mil5.2.7:1.1_0": "“Bhante nāgasena, bhāsitampetaṁ bhagavatā—",
  "mil5.2.7:1.2_0": "‘tathāgatassa kho, ānanda,",
  "mil5.2.7:1.2_1": "na evaṁ hoti “ahaṁ bhikkhusaṅghaṁ pariharissāmī”ti vā,",
  "mil5.2.7:1.2_2": "“mamuddesiko bhikkhusaṅgho”ti vā’ti.",
  "mil5.2.7:1.3_0": "Puna ca metteyyassa bhagavato sabhāvaguṇaṁ paridīpayamānena bhagavatā evaṁ bhaṇitaṁ—",
  "mil5.2.7:1.4_0": "‘so anekasahassaṁ bhikkhusaṅghaṁ pariharissati,",
  "mil5.2.7:1.4_1": "seyyathāpi ahaṁ etarahi anekasataṁ bhikkhusaṅghaṁ pariharāmī’ti.",
  "mil5.2.7:1.5_0": "Yadi, bhante nāgasena, bhagavatā bhaṇitaṁ—",
  "mil5.2.7:1.6_0": "‘tathāgatassa kho, ānanda,",
  "mil5.2.7:1.6_1": "na evaṁ hoti “ahaṁ bhikkhusaṅghaṁ pariharissāmī”ti vā,",
  "mil5.2.7:1.6_2": "“mamuddesiko bhikkhusaṅgho”ti vā’ti,",
  "mil5.2.7:1.6_3": "tena hi anekasataṁ bhikkhusaṅghaṁ pariharāmīti yaṁ vacanaṁ,",
  "mil5.2.7:1.6_4": "taṁ micchā.",
  "mil5.2.7:1.7_0": "Yadi tathāgatena bhaṇitaṁ—",
  "mil5.2.7:1.8_0": "‘so anekasahassaṁ bhikkhusaṅghaṁ pariharissati,",
  "mil5.2.7:1.8_1": "seyyathāpi ahaṁ etarahi anekasataṁ bhikkhusaṅghaṁ pariharāmī’ti,",
  "mil5.2.7:1.8_2": "tena hi ‘tathāgatassa kho, ānanda,",
  "mil5.2.7:1.8_3": "na evaṁ hoti “ahaṁ bhikkhusaṅghaṁ pariharissāmī”ti vā,",
  "mil5.2.7:1.8_4": "“mamuddesiko bhikkhusaṅgho”ti vā’ti tampi vacanaṁ micchā,",
  "mil5.2.7:1.8_5": "ayampi ubhato koṭiko pañho tavānuppatto,",
  "mil5.2.7:1.8_6": "so tayā nibbāhitabbo”ti.",
  "mil5.2.7:2.1_0": "“Bhāsitampetaṁ, mahārāja,",
  "mil5.2.7:2.1_1": "bhagavatā ‘tathāgatassa kho, ānanda,",
  "mil5.2.7:2.1_2": "na evaṁ hoti “ahaṁ bhikkhusaṅghaṁ pariharissāmī”ti vā,",
  "mil5.2.7:2.1_3": "“mamuddesiko bhikkhusaṅgho”ti vā’ti.",
  "mil5.2.7:2.2_0": "Puna ca metteyyassāpi bhagavato sabhāvaguṇaṁ paridīpayamānena bhagavatā bhaṇitaṁ—",
  "mil5.2.7:2.3_0": "‘so anekasahassaṁ bhikkhusaṅghaṁ pariharissati,",
  "mil5.2.7:2.3_1": "seyyathāpi ahaṁ etarahi anekasataṁ bhikkhusaṅghaṁ pariharāmī’ti.",
  "mil5.2.7:2.4_0": "Etasmiñca, mahārāja, pañhe eko attho sāvaseso, eko attho niravaseso.",
  "mil5.2.7:2.5_0": "Na, mahārāja, tathāgato parisāya anugāmiko, parisā pana tathāgatassa anugāmikā.",
  "mil5.2.7:2.6_0": "Sammuti, mahārāja,",
  "mil5.2.7:2.6_1": "esā ‘ahan’ti ‘mamā’ti,",
  "mil5.2.7:2.6_2": "na paramattho eso, vigataṁ, mahārāja,",
  "mil5.2.7:2.6_3": "tathāgatassa pemaṁ,",
  "mil5.2.7:2.6_4": "vigato sineho,",
  "mil5.2.7:2.6_5": "‘mayhan’tipi tathāgatassa gahaṇaṁ natthi,",
  "mil5.2.7:2.6_6": "upādāya pana avassayo hoti.",
  "mil5.2.7:3.1_0": "Yathā, mahārāja,",
  "mil5.2.7:3.1_1": "pathavī bhūmaṭṭhānaṁ sattānaṁ patiṭṭhā hoti upassayaṁ,",
  "mil5.2.7:3.1_2": "pathaviṭṭhā cete sattā,",
  "mil5.2.7:3.1_3": "na ca mahāpathaviyā ‘mayhete’ti apekkhā hoti;",
  "mil5.2.7:3.2_0": "evameva kho, mahārāja,",
  "mil5.2.7:3.2_1": "tathāgato sabbasattānaṁ patiṭṭhā hoti upassayaṁ,",
  "mil5.2.7:3.2_2": "tathāgataṭṭhā cete sattā,",
  "mil5.2.7:3.2_3": "na ca tathāgatassa ‘mayhete’ti apekkhā hoti.",
  "mil5.2.7:3.3_0": "Yathā vā pana, mahārāja,",
  "mil5.2.7:3.3_1": "mahatimahāmegho abhivassanto tiṇarukkhapasumanussānaṁ vuḍḍhiṁ deti santatiṁ anupāleti.",
  "mil5.2.7:3.4_0": "Vuṭṭhūpajīvino cete sattā sabbe, na ca mahāmeghassa ‘mayhete’ti apekkhā hoti.",
  "mil5.2.7:3.5_0": "Evameva kho, mahārāja,",
  "mil5.2.7:3.5_1": "tathāgato sabbasattānaṁ kusaladhamme janeti anupāleti,",
  "mil5.2.7:3.5_2": "satthūpajīvino cete sattā sabbe,",
  "mil5.2.7:3.5_3": "na ca tathāgatassa ‘mayhete’ti apekkhā hoti.",
  "mil5.2.7:3.6_0": "Taṁ kissa hetu?",
  "mil5.2.7:3.7_0": "Attānudiṭṭhiyā pahīnattā”ti.",
  "mil5.2.7:4.1_0": "“Sādhu,",
  "mil5.2.7:4.1_1": "bhante nāgasena,",
  "mil5.2.7:4.1_2": "sunibbeṭhito pañho bahuvidhehi kāraṇehi,",
  "mil5.2.7:4.1_3": "gambhīro uttānīkato,",
  "mil5.2.7:4.1_4": "gaṇṭhi bhinno,",
  "mil5.2.7:4.1_5": "gahanaṁ agahanaṁ kataṁ,",
  "mil5.2.7:4.1_6": "andhakāro āloko kato,",
  "mil5.2.7:4.1_7": "bhaggā paravādā,",
  "mil5.2.7:4.1_8": "jinaputtānaṁ cakkhuṁ uppāditan”ti.",
  "mil5.2.7:5.1_0": "Bhikkhusaṅghapariharaṇapañho sattamo."
}