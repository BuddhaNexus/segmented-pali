{
  "thag6.1:0.1_0": "Theragāthā",
  "thag6.1:0.2_0": "Chakkanipāta",
  "thag6.1:0.3_0": "Paṭhamavagga",
  "thag6.1:0.4_0": "6.1 Uruveḷakassapattheragāthā",
  "thag6.1:1.1_0": "“Disvāna pāṭihīrāni,",
  "thag6.1:1.2_0": "gotamassa yasassino;",
  "thag6.1:1.3_0": "Na tāvāhaṁ paṇipatiṁ,",
  "thag6.1:1.4_0": "issāmānena vañcito.",
  "thag6.1:2.1_0": "Mama saṅkappamaññāya,",
  "thag6.1:2.2_0": "codesi narasārathi;",
  "thag6.1:2.3_0": "Tato me āsi saṁvego,",
  "thag6.1:2.4_0": "abbhuto lomahaṁsano.",
  "thag6.1:3.1_0": "Pubbe jaṭilabhūtassa,",
  "thag6.1:3.2_0": "yā me siddhi parittikā;",
  "thag6.1:3.3_0": "Tāhaṁ tadā nirākatvā,",
  "thag6.1:3.4_0": "pabbajiṁ jinasāsane.",
  "thag6.1:4.1_0": "Pubbe yaññena santuṭṭho,",
  "thag6.1:4.2_0": "kāmadhātupurakkhato;",
  "thag6.1:4.3_0": "Pacchā rāgañca dosañca,",
  "thag6.1:4.4_0": "mohañcāpi samūhaniṁ.",
  "thag6.1:5.1_0": "Pubbenivāsaṁ jānāmi,",
  "thag6.1:5.2_0": "dibbacakkhu visodhitaṁ;",
  "thag6.1:5.3_0": "Iddhimā paracittaññū,",
  "thag6.1:5.4_0": "dibbasotañca pāpuṇiṁ.",
  "thag6.1:6.1_0": "Yassa catthāya pabbajito,",
  "thag6.1:6.2_0": "agārasmānagāriyaṁ;",
  "thag6.1:6.3_0": "So me attho anuppatto,",
  "thag6.1:6.4_0": "sabbasaṁyojanakkhayo”ti.",
  "thag6.1:6.5_0": "… Uruveḷakassapo thero …."
}