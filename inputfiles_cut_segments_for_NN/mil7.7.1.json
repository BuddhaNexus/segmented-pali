{
  "mil7.7.1:0.1_0": "Milindapañha",
  "mil7.7.1:0.2_0": "Opammakathāpañha",
  "mil7.7.1:0.3_0": "Makkaṭakavagga",
  "mil7.7.1:0.4_0": "1. Panthamakkaṭakaṅgapañha",
  "mil7.7.1:1.1_0": "“Bhante nāgasena,",
  "mil7.7.1:1.1_1": "‘panthamakkaṭakassa ekaṁ aṅgaṁ gahetabban’ti yaṁ vadesi,",
  "mil7.7.1:1.1_2": "katamaṁ taṁ ekaṁ aṅgaṁ gahetabban”ti?",
  "mil7.7.1:1.2_0": "“Yathā, mahārāja,",
  "mil7.7.1:1.2_1": "panthamakkaṭako panthe makkaṭajālavitānaṁ katvā yadi tattha jālake laggati kimi vā makkhikā vā paṭaṅgo vā,",
  "mil7.7.1:1.2_2": "taṁ gahetvā bhakkhayati;",
  "mil7.7.1:1.3_0": "evameva kho, mahārāja,",
  "mil7.7.1:1.3_1": "yoginā yogāvacarena chasu dvāresu satipaṭṭhānajālavitānaṁ katvā yadi tattha kilesamakkhikā bajjhanti,",
  "mil7.7.1:1.3_2": "tattheva ghātetabbā.",
  "mil7.7.1:1.4_0": "Idaṁ, mahārāja, panthamakkaṭakassa ekaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.7.1:1.5_0": "Bhāsitampetaṁ, mahārāja, therena anuruddhena—",
  "mil7.7.1:2.1_0": "‘Cittaṁ niyame chasu dvāresu,",
  "mil7.7.1:2.2_0": "Satipaṭṭhānavaruttame;",
  "mil7.7.1:2.3_0": "Kilesā tattha laggā ce,",
  "mil7.7.1:2.4_0": "Hantabbā te vipassinā’”ti.",
  "mil7.7.1:3.1_0": "Panthamakkaṭakaṅgapañho paṭhamo."
}