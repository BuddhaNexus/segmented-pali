{
  "mil7.7.3:0.1_0": "Milindapañha",
  "mil7.7.3:0.2_0": "Opammakathāpañha",
  "mil7.7.3:0.3_0": "Makkaṭakavagga",
  "mil7.7.3:0.4_0": "3. Cittakadharakummaṅgapañha",
  "mil7.7.3:1.1_0": "“Bhante nāgasena,",
  "mil7.7.3:1.1_1": "‘cittakadharakummassa ekaṁ aṅgaṁ gahetabban’ti yaṁ vadesi,",
  "mil7.7.3:1.1_2": "katamaṁ taṁ ekaṁ aṅgaṁ gahetabban”ti?",
  "mil7.7.3:1.2_0": "“Yathā, mahārāja,",
  "mil7.7.3:1.2_1": "cittakadharakummo udakabhayā udakaṁ parivajjetvā vicarati,",
  "mil7.7.3:1.2_2": "tāya ca pana udakaṁ parivajjanāya āyunā na parihāyati;",
  "mil7.7.3:1.3_0": "evameva kho, mahārāja,",
  "mil7.7.3:1.3_1": "yoginā yogāvacarena pamāde bhayadassāvinā bhavitabbaṁ, appamāde guṇavisesadassāvinā.",
  "mil7.7.3:1.4_0": "Tāya ca pana bhayadassāvitāya na parihāyati sāmaññā, nibbānassa santike upeti.",
  "mil7.7.3:1.5_0": "Idaṁ, mahārāja,",
  "mil7.7.3:1.5_1": "cittakadharakummassa ekaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.7.3:1.6_0": "Bhāsitampetaṁ, mahārāja,",
  "mil7.7.3:1.6_1": "bhagavatā devātidevena dhammapade—",
  "mil7.7.3:2.1_0": "‘Appamādarato bhikkhu,",
  "mil7.7.3:2.2_0": "pamāde bhayadassi vā;",
  "mil7.7.3:2.3_0": "Abhabbo parihānāya,",
  "mil7.7.3:2.4_0": "nibbānasseva santike’”ti.",
  "mil7.7.3:3.1_0": "Cittakadharakummaṅgapañho catuttho."
}