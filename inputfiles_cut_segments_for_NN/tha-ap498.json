{
  "tha-ap498:0.1_0": "Therāpadāna",
  "tha-ap498:0.2_0": "Kiṅkaṇipupphavagga",
  "tha-ap498:0.3_0": "6. Ghatamaṇḍadāyakattheraapadāna",
  "tha-ap498:1.1_0": "“Sucintitaṁ bhagavantaṁ,",
  "tha-ap498:1.2_0": "lokajeṭṭhaṁ narāsabhaṁ;",
  "tha-ap498:1.3_0": "Upaviṭṭhaṁ mahāraññaṁ,",
  "tha-ap498:1.4_0": "vātābādhena pīḷitaṁ.",
  "tha-ap498:2.1_0": "Disvā cittaṁ pasādetvā,",
  "tha-ap498:2.2_0": "ghatamaṇḍamupānayiṁ;",
  "tha-ap498:2.3_0": "Katattā ācitattā ca,",
  "tha-ap498:2.4_0": "gaṅgā bhāgīrathī ayaṁ.",
  "tha-ap498:3.1_0": "Mahāsamuddā cattāro,",
  "tha-ap498:3.2_0": "ghataṁ sampajjare mama;",
  "tha-ap498:3.3_0": "Ayañca pathavī ghorā,",
  "tha-ap498:3.4_0": "appamāṇā asaṅkhiyā.",
  "tha-ap498:4.1_0": "Mama saṅkappamaññāya,",
  "tha-ap498:4.2_0": "bhavate madhusakkarā;",
  "tha-ap498:4.3_0": "Cātuddīpā ime rukkhā,",
  "tha-ap498:4.4_0": "pādapā dharaṇīruhā.",
  "tha-ap498:5.1_0": "Mama saṅkappamaññāya,",
  "tha-ap498:5.2_0": "kapparukkhā bhavanti te;",
  "tha-ap498:5.3_0": "Paññāsakkhattuṁ devindo,",
  "tha-ap498:5.4_0": "devarajjamakārayiṁ.",
  "tha-ap498:6.1_0": "Ekapaññāsakkhattuñca,",
  "tha-ap498:6.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap498:6.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap498:6.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap498:7.1_0": "Catunnavutito kappe,",
  "tha-ap498:7.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap498:7.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap498:7.4_0": "ghatamaṇḍassidaṁ phalaṁ.",
  "tha-ap498:8.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap498:8.2_0": "…pe…",
  "tha-ap498:8.3_0": "viharāmi anāsavo.",
  "tha-ap498:9.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap498:9.2_0": "…pe…",
  "tha-ap498:9.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap498:10.1_0": "Paṭisambhidā catasso,",
  "tha-ap498:10.2_0": "…pe…",
  "tha-ap498:10.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap498:11.1_0": "Itthaṁ sudaṁ āyasmā ghatamaṇḍadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap498:12.1_0": "Ghatamaṇḍadāyakattherassāpadānaṁ chaṭṭhaṁ."
}