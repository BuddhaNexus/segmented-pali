{
  "snp2.2:0.1_0": "Sutta Nipāta 2.2",
  "snp2.2:0.2_0": "Āmagandhasutta",
  "snp2.2:1.1_0": "“Sāmākaciṅgūlakacīnakāni ca,",
  "snp2.2:1.2_0": "Pattapphalaṁ mūlaphalaṁ gavipphalaṁ;",
  "snp2.2:1.3_0": "Dhammena laddhaṁ satamasnamānā,",
  "snp2.2:1.4_0": "Na kāmakāmā alikaṁ bhaṇanti.",
  "snp2.2:2.1_0": "Yadasnamāno sukataṁ suniṭṭhitaṁ,",
  "snp2.2:2.2_0": "Parehi dinnaṁ payataṁ paṇītaṁ;",
  "snp2.2:2.3_0": "Sālīnamannaṁ paribhuñjamāno,",
  "snp2.2:2.4_0": "So bhuñjasī kassapa āmagandhaṁ.",
  "snp2.2:3.1_0": "Na āmagandho mama kappatīti,",
  "snp2.2:3.2_0": "Icceva tvaṁ bhāsasi brahmabandhu;",
  "snp2.2:3.3_0": "Sālīnamannaṁ paribhuñjamāno,",
  "snp2.2:3.4_0": "Sakuntamaṁsehi susaṅkhatehi;",
  "snp2.2:3.5_0": "Pucchāmi taṁ kassapa etamatthaṁ,",
  "snp2.2:3.6_0": "Kathaṁpakāro tava āmagandho”.",
  "snp2.2:4.1_0": "“Pāṇātipāto vadhachedabandhanaṁ,",
  "snp2.2:4.2_0": "Theyyaṁ musāvādo nikativañcanāni ca;",
  "snp2.2:4.3_0": "Ajjhenakuttaṁ paradārasevanā,",
  "snp2.2:4.4_0": "Esāmagandho na hi maṁsabhojanaṁ.",
  "snp2.2:5.1_0": "Ye idha kāmesu asaññatā janā,",
  "snp2.2:5.2_0": "Rasesu giddhā asucibhāvamassitā;",
  "snp2.2:5.3_0": "Natthikadiṭṭhī visamā durannayā,",
  "snp2.2:5.4_0": "Esāmagandho na hi maṁsabhojanaṁ.",
  "snp2.2:6.1_0": "Ye lūkhasā dāruṇā piṭṭhimaṁsikā,",
  "snp2.2:6.2_0": "Mittadduno nikkaruṇātimānino;",
  "snp2.2:6.3_0": "Adānasīlā na ca denti kassaci,",
  "snp2.2:6.4_0": "Esāmagandho na hi maṁsabhojanaṁ.",
  "snp2.2:7.1_0": "Kodho mado thambho paccupaṭṭhāpanā,",
  "snp2.2:7.2_0": "Māyā usūyā bhassasamussayo ca;",
  "snp2.2:7.3_0": "Mānātimāno ca asabbhi santhavo,",
  "snp2.2:7.4_0": "Esāmagandho na hi maṁsabhojanaṁ.",
  "snp2.2:8.1_0": "Ye pāpasīlā iṇaghātasūcakā,",
  "snp2.2:8.2_0": "Vohārakūṭā idha pāṭirūpikā;",
  "snp2.2:8.3_0": "Narādhamā yedha karonti kibbisaṁ,",
  "snp2.2:8.4_0": "Esāmagandho na hi maṁsabhojanaṁ.",
  "snp2.2:9.1_0": "Ye idha pāṇesu asaññatā janā,",
  "snp2.2:9.2_0": "Paresamādāya vihesamuyyutā;",
  "snp2.2:9.3_0": "Dussīlaluddā pharusā anādarā,",
  "snp2.2:9.4_0": "Esāmagandho na hi maṁsabhojanaṁ.",
  "snp2.2:10.1_0": "Etesu giddhā viruddhātipātino,",
  "snp2.2:10.2_0": "Niccuyyutā pecca tamaṁ vajanti ye;",
  "snp2.2:10.3_0": "Patanti sattā nirayaṁ avaṁsirā,",
  "snp2.2:10.4_0": "Esāmagandho na hi maṁsabhojanaṁ.",
  "snp2.2:11.1_0": "Na macchamaṁsānamanāsakattaṁ,",
  "snp2.2:11.2_0": "Na naggiyaṁ na muṇḍiyaṁ jaṭājallaṁ;",
  "snp2.2:11.3_0": "Kharājināni nāggihuttassupasevanā,",
  "snp2.2:11.4_0": "Ye vāpi loke amarā bahū tapā;",
  "snp2.2:11.5_0": "Mantāhutī yaññamutūpasevanā,",
  "snp2.2:11.6_0": "Sodhenti maccaṁ avitiṇṇakaṅkhaṁ.",
  "snp2.2:12.1_0": "Sotesu gutto viditindriyo care,",
  "snp2.2:12.2_0": "Dhamme ṭhito ajjavamaddave rato;",
  "snp2.2:12.3_0": "Saṅgātigo sabbadukkhappahīno,",
  "snp2.2:12.4_0": "Na lippati diṭṭhasutesu dhīro”.",
  "snp2.2:13.1_0": "Iccetamatthaṁ bhagavā punappunaṁ,",
  "snp2.2:13.2_0": "Akkhāsi naṁ vedayi mantapāragū;",
  "snp2.2:13.3_0": "Citrāhi gāthāhi munī pakāsayi,",
  "snp2.2:13.4_0": "Nirāmagandho asito durannayo.",
  "snp2.2:14.1_0": "Sutvāna buddhassa subhāsitaṁ padaṁ,",
  "snp2.2:14.2_0": "Nirāmagandhaṁ sabbadukkhappanūdanaṁ;",
  "snp2.2:14.3_0": "Nīcamano vandi tathāgatassa,",
  "snp2.2:14.4_0": "Tattheva pabbajjamarocayitthāti.",
  "snp2.2:14.5_0": "Āmagandhasuttaṁ dutiyaṁ."
}