{
  "tha-ap153:0.1_0": "Therāpadāna",
  "tha-ap153:0.2_0": "Bandhujīvakavagga",
  "tha-ap153:0.3_0": "1. Bandhujīvakattheraapadāna",
  "tha-ap153:1.1_0": "“Candaṁva vimalaṁ suddhaṁ,",
  "tha-ap153:1.2_0": "vippasannamanāvilaṁ;",
  "tha-ap153:1.3_0": "Nandībhavaparikkhīṇaṁ,",
  "tha-ap153:1.4_0": "tiṇṇaṁ loke visattikaṁ.",
  "tha-ap153:2.1_0": "Nibbāpayantaṁ janataṁ,",
  "tha-ap153:2.2_0": "Tiṇṇaṁ tārayataṁ varaṁ;",
  "tha-ap153:2.3_0": "Muniṁ vanamhi jhāyantaṁ,",
  "tha-ap153:2.4_0": "Ekaggaṁ susamāhitaṁ.",
  "tha-ap153:3.1_0": "Bandhujīvakapupphāni,",
  "tha-ap153:3.2_0": "lagetvā suttakenahaṁ;",
  "tha-ap153:3.3_0": "Buddhassa abhiropayiṁ,",
  "tha-ap153:3.4_0": "sikhino lokabandhuno.",
  "tha-ap153:4.1_0": "Ekattiṁse ito kappe,",
  "tha-ap153:4.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap153:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap153:4.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap153:5.1_0": "Ito sattamake kappe,",
  "tha-ap153:5.2_0": "manujindo mahāyaso;",
  "tha-ap153:5.3_0": "Samantacakkhu nāmāsi,",
  "tha-ap153:5.4_0": "cakkavattī mahabbalo.",
  "tha-ap153:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap153:6.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap153:6.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap153:6.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap153:7.1_0": "Itthaṁ sudaṁ āyasmā bandhujīvako thero imā gāthāyo abhāsitthāti.",
  "tha-ap153:8.1_0": "Bandhujīvakattherassāpadānaṁ paṭhamaṁ."
}