{
  "anya-e1005n2:0_0": "4. Bāladujjanakaṇḍo",
  "anya-e1005n2:1_0": "68.",
  "anya-e1005n2:2_0": " Atippiyo na kātabbo,",
  "anya-e1005n2:3_0": "Khalo kotūhalaṁ karo;",
  "anya-e1005n2:4_0": "Sirasā vahyamānopi,",
  "anya-e1005n2:5_0": "Aḍḍhapūro ghaṭo yathā.",
  "anya-e1005n2:6_0": "69.",
  "anya-e1005n2:7_0": " Sappo duṭṭho khalo duṭṭho,",
  "anya-e1005n2:8_0": "Sappo duṭṭhataro khalo;",
  "anya-e1005n2:9_0": "Mantosadhehi so sappo,",
  "anya-e1005n2:10_0": "Khalo kenupasammati.",
  "anya-e1005n2:11_0": "70.",
  "anya-e1005n2:12_0": " Yo bālo maññati bālyaṁ,",
  "anya-e1005n2:13_0": "Paṇḍito vāpi tena so;",
  "anya-e1005n2:14_0": "Bālova paṇḍitamānī,",
  "anya-e1005n2:15_0": "So ve bāloti vuccati.",
  "anya-e1005n2:16_0": "71.",
  "anya-e1005n2:17_0": " Madhuṁva maññatī bālo,",
  "anya-e1005n2:18_0": "Yāva pāpaṁ na paccati;",
  "anya-e1005n2:19_0": "Yadāca paccatī pāpaṁ,",
  "anya-e1005n2:20_0": "Atha dukkhaṁ nigacchati.",
  "anya-e1005n2:21_0": "72.",
  "anya-e1005n2:22_0": " Na sādhu balavā bālo,",
  "anya-e1005n2:23_0": "Sahasā vindate dhanaṁ;",
  "anya-e1005n2:24_0": "Kāyassa bhedā duppañño,",
  "anya-e1005n2:25_0": "Nirayaṁ sopapajjati.",
  "anya-e1005n2:26_0": "73.",
  "anya-e1005n2:27_0": " Ghare duṭṭho ca mūsīko ca,",
  "anya-e1005n2:28_0": "Vane duṭṭho ca vānaro;",
  "anya-e1005n2:29_0": "Sakuṇe ca duṭṭho kāko,",
  "anya-e1005n2:30_0": "Nare duṭṭhoca brāhmaṇo.",
  "anya-e1005n2:31_0": "74.",
  "anya-e1005n2:32_0": " Dīghā jāgarato ratti,",
  "anya-e1005n2:33_0": "Dīghaṁ santassa yojanaṁ;",
  "anya-e1005n2:34_0": "Dīgho bālāna saṁsāro,",
  "anya-e1005n2:35_0": "Saddhammaṁ a-vijānataṁ.",
  "anya-e1005n2:36_0": "75.",
  "anya-e1005n2:37_0": " Tila mattaṁ paresaṁva,",
  "anya-e1005n2:38_0": "Appa dosañca passati;",
  "anya-e1005n2:39_0": "Nāḷikerampi sadosaṁ,",
  "anya-e1005n2:40_0": "Khala-jāto na passati.",
  "anya-e1005n2:41_0": "76.",
  "anya-e1005n2:42_0": " Nattadosaṁ pare jaññā,",
  "anya-e1005n2:43_0": "Jaññā dosaṁ parassatu;",
  "anya-e1005n2:44_0": "Guyhe kummo aṅgāni,",
  "anya-e1005n2:45_0": "Para dosañca lakkhaye.",
  "anya-e1005n2:46_0": "77.",
  "anya-e1005n2:47_0": " Paṇḍitassa pasaṁsāya,",
  "anya-e1005n2:48_0": "Daṇḍo bālena dīyate;",
  "anya-e1005n2:49_0": "Paṇḍito paṇḍiteneva,",
  "anya-e1005n2:50_0": "Vaṇṇitova suvaṇṇito.",
  "anya-e1005n2:51_0": "78.",
  "anya-e1005n2:52_0": " Luddhaṁ atthena gaṇheyya,",
  "anya-e1005n2:53_0": "Thaddhaṁ añjali kammunā;",
  "anya-e1005n2:54_0": "Chandānuvattiyā mūḷhaṁ,",
  "anya-e1005n2:55_0": "Yathābhūtena paṇḍitaṁ.",
  "anya-e1005n2:56_0": "Bāladujjanakaṇḍo niṭṭhito."
}