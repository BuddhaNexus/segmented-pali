{
  "iti21:0.1_0": "Itivuttaka 21",
  "iti21:0.2_0": "Ekakanipāta",
  "iti21:0.3_0": "Tatiyavagga",
  "iti21:0.4_0": "Pasannacittasutta",
  "iti21:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti21:2.1_0": "“Idhāhaṁ, bhikkhave,",
  "iti21:2.1_1": "ekaccaṁ puggalaṁ pasannacittaṁ evaṁ cetasā ceto paricca pajānāmi:",
  "iti21:2.2_0": "‘imamhi cāyaṁ samaye puggalo kālaṁ kareyya yathābhataṁ nikkhitto evaṁ sagge’.",
  "iti21:2.3_0": "Taṁ kissa hetu?",
  "iti21:2.4_0": "Cittaṁ hissa, bhikkhave, pasannaṁ.",
  "iti21:2.5_0": "Cetopasādahetu kho pana, bhikkhave,",
  "iti21:2.5_1": "evam’idhekacce sattā kāyassa bhedā paraṁ maraṇā sugatiṁ saggaṁ lokaṁ upapajjantī”ti.",
  "iti21:2.6_0": "Etamatthaṁ bhagavā avoca.",
  "iti21:2.7_0": "Tatthetaṁ iti vuccati:",
  "iti21:3.1_0": "“Pasannacittaṁ ñatvāna,",
  "iti21:3.2_0": "ekaccaṁ idha puggalaṁ;",
  "iti21:3.3_0": "Etamatthañca byākāsi,",
  "iti21:3.4_0": "buddho bhikkhūna santike.",
  "iti21:4.1_0": "Imamhi cāyaṁ samaye,",
  "iti21:4.2_0": "kālaṁ kayirātha puggalo;",
  "iti21:4.3_0": "Sugatiṁ upapajjeyya,",
  "iti21:4.4_0": "cittaṁ hissa pasāditaṁ.",
  "iti21:5.1_0": "Yathā haritvā nikkhipeyya,",
  "iti21:5.2_0": "evamevaṁ tathāvidho;",
  "iti21:5.3_0": "Cetopasādahetu hi,",
  "iti21:5.4_0": "sattā gacchanti suggatin”ti.",
  "iti21:6.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti21:6.2_0": "Paṭhamaṁ."
}