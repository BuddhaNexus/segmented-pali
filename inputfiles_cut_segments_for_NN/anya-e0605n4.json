{
  "anya-e0605n4:0_0": "Abhinīhāradīpanīgāthā",
  "anya-e0605n4:1_0": "13.",
  "anya-e0605n4:2_0": " Vadetha tassīdha anappakaṁ guṇaṁ,",
  "anya-e0605n4:3_0": "Na tena tulyo paramo ca vijjati;",
  "anya-e0605n4:4_0": "Kiṁ taṁ guṇaṁ taṁ sadisena dinnaṁ,",
  "anya-e0605n4:5_0": "Sayaṁkataṁ kinnu adhiccaladdhaṁ.",
  "anya-e0605n4:6_0": "14.",
  "anya-e0605n4:7_0": " Nādhiccaladdhaṁ na ca pubbabuddhā,",
  "anya-e0605n4:8_0": "Brahmādinaṁ sammutiyā bahūnaṁ;",
  "anya-e0605n4:9_0": "Sayaṁkateneva anopamena,",
  "anya-e0605n4:10_0": "Dānādinā laddhamidaṁ vipākaṁ.",
  "anya-e0605n4:11_0": "15.",
  "anya-e0605n4:12_0": " Ito catunnaṁ asaṅkhiyānaṁ,",
  "anya-e0605n4:13_0": "Sataṁsahassānadhikānamatthake;",
  "anya-e0605n4:14_0": "Kappe atītamhi sumedhatāpaso,",
  "anya-e0605n4:15_0": "Vehāyasaṁ gacchati iddhiyā tadā.",
  "anya-e0605n4:16_0": "16.",
  "anya-e0605n4:17_0": " Dipaṅkaro nāma jino sasaṅgho,",
  "anya-e0605n4:18_0": "Rammaṁ puraṁ yāti virocamāno;",
  "anya-e0605n4:19_0": "Manussadevehibhipūjiyanto,",
  "anya-e0605n4:20_0": "Sahassaraṁsi viya bhāṇumā nabhe.",
  "anya-e0605n4:21_0": "17.",
  "anya-e0605n4:22_0": " Tassañjasaṁ kātubahussahānaṁ,",
  "anya-e0605n4:23_0": "Buddhoti sutvā sumano patīto;",
  "anya-e0605n4:24_0": "Mamajja dehaṁ panimassa datvā,",
  "anya-e0605n4:25_0": "Buddho ahaṁ hessamanāgatediso.",
  "anya-e0605n4:26_0": "18.",
  "anya-e0605n4:27_0": " Tasmiñjase kandaratamhi paṅke,",
  "anya-e0605n4:28_0": "Katvāna setuṁ sayi so sadehaṁ;",
  "anya-e0605n4:29_0": "Buddho ayaṁ gacchatu piṭṭhiyā mamaṁ,",
  "anya-e0605n4:30_0": "Bodhissace hessati me anāgate.",
  "anya-e0605n4:31_0": "19.",
  "anya-e0605n4:32_0": " Ussīsakaṁ yāti jino hi tassa,",
  "anya-e0605n4:33_0": "Ajjhāsayo sijjhatimassanāgate;",
  "anya-e0605n4:34_0": "Ñatvāna byākāsi asesato hi,",
  "anya-e0605n4:35_0": "Buddho ayaṁ hessatināgatesu.",
  "anya-e0605n4:36_0": "20.",
  "anya-e0605n4:37_0": " Sutvāna patto va mahābhisekaṁ,",
  "anya-e0605n4:38_0": "Laddhaṁ va bodhiṁ samanussaranto;",
  "anya-e0605n4:39_0": "Pūjetvā yāte munidevamānuse,",
  "anya-e0605n4:40_0": "Uṭṭhāya so sammasi pāramī dasa.",
  "anya-e0605n4:41_0": "21.",
  "anya-e0605n4:42_0": " Daḷhaṁ gahetvā samatiṁsapāramī,",
  "anya-e0605n4:43_0": "Sikkhattayañcassa jinassa santike;",
  "anya-e0605n4:44_0": "Kātuṁ samattho pi bhavassa pāraṁ,",
  "anya-e0605n4:45_0": "Sattesu kāruññabalā bhavaṁ gato.",
  "anya-e0605n4:46_0": "22.",
  "anya-e0605n4:47_0": "Uppannuppannake so jinavaramatule pūjayitvā asesaṁ buddho eso hi oso bhavati niyamato byākato tehi tehi",
  "anya-e0605n4:47_1": "tesaṁ tesaṁ jinānaṁ acanamanupamaṁ pūjayitvā sirena,",
  "anya-e0605n4:48_0": "Taṁ taṁ dukkhaṁ sahitvā sakalaguṇadadaṁ pāramī pūrayittha."
}