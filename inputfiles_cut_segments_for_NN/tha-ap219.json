{
  "tha-ap219:0.1_0": "Therāpadāna",
  "tha-ap219:0.2_0": "Hatthivagga",
  "tha-ap219:0.3_0": "7. Tālavaṇṭadāyakattheraapadāna",
  "tha-ap219:1.1_0": "“Tālavaṇṭaṁ mayā dinnaṁ,",
  "tha-ap219:1.2_0": "tissassādiccabandhuno;",
  "tha-ap219:1.3_0": "Gimhanibbāpanatthāya,",
  "tha-ap219:1.4_0": "pariḷāhopasantiyā.",
  "tha-ap219:2.1_0": "Sannibbāpemi rāgaggiṁ,",
  "tha-ap219:2.2_0": "dosaggiñca taduttariṁ;",
  "tha-ap219:2.3_0": "Nibbāpemi ca mohaggiṁ,",
  "tha-ap219:2.4_0": "tālavaṇṭassidaṁ phalaṁ.",
  "tha-ap219:3.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap219:3.2_0": "bhavā sabbe samūhatā;",
  "tha-ap219:3.3_0": "Dhāremi antimaṁ dehaṁ,",
  "tha-ap219:3.4_0": "sammāsambuddhasāsane.",
  "tha-ap219:4.1_0": "Dvenavute ito kappe,",
  "tha-ap219:4.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap219:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap219:4.4_0": "tālavaṇṭassidaṁ phalaṁ.",
  "tha-ap219:5.1_0": "Tesaṭṭhimhi ito kappe,",
  "tha-ap219:5.2_0": "mahānāmasanāmako;",
  "tha-ap219:5.3_0": "Sattaratanasampanno,",
  "tha-ap219:5.4_0": "cakkavattī mahabbalo.",
  "tha-ap219:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap219:6.2_0": "…pe…",
  "tha-ap219:6.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap219:7.1_0": "Itthaṁ sudaṁ āyasmā tālavaṇṭadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap219:8.1_0": "Tālavaṇṭadāyakattherassāpadānaṁ sattamaṁ."
}