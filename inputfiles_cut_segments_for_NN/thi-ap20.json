{
  "thi-ap20:0.1_0": "Therīapadāna",
  "thi-ap20:0.2_0": "Ekūposathikavagga",
  "thi-ap20:0.3_0": "10. Paṭācārātherīapadāna",
  "thi-ap20:1.1_0": "“Padumuttaro nāma jino,",
  "thi-ap20:1.2_0": "sabbadhammāna pāragū;",
  "thi-ap20:1.3_0": "Ito satasahassamhi,",
  "thi-ap20:1.4_0": "kappe uppajji nāyako.",
  "thi-ap20:2.1_0": "Tadāhaṁ haṁsavatiyaṁ,",
  "thi-ap20:2.2_0": "jātā seṭṭhikule ahuṁ;",
  "thi-ap20:2.3_0": "Nānāratanapajjote,",
  "thi-ap20:2.4_0": "mahāsukhasamappitā.",
  "thi-ap20:3.1_0": "Upetvā taṁ mahāvīraṁ,",
  "thi-ap20:3.2_0": "assosiṁ dhammadesanaṁ;",
  "thi-ap20:3.3_0": "Tato jātapasādāhaṁ,",
  "thi-ap20:3.4_0": "upesiṁ saraṇaṁ jinaṁ.",
  "thi-ap20:4.1_0": "Tato vinayadhārīnaṁ,",
  "thi-ap20:4.2_0": "aggaṁ vaṇṇesi nāyako;",
  "thi-ap20:4.3_0": "Bhikkhuniṁ lajjiniṁ tādiṁ,",
  "thi-ap20:4.4_0": "kappākappavisāradaṁ.",
  "thi-ap20:5.1_0": "Tadā muditacittāhaṁ,",
  "thi-ap20:5.2_0": "taṁ ṭhānamabhikaṅkhinī;",
  "thi-ap20:5.3_0": "Nimantetvā dasabalaṁ,",
  "thi-ap20:5.4_0": "sasaṅghaṁ lokanāyakaṁ.",
  "thi-ap20:6.1_0": "Bhojayitvāna sattāhaṁ,",
  "thi-ap20:6.2_0": "daditvāva ticīvaraṁ;",
  "thi-ap20:6.3_0": "Nipacca sirasā pāde,",
  "thi-ap20:6.4_0": "idaṁ vacanamabraviṁ.",
  "thi-ap20:7.1_0": "‘Yā tayā vaṇṇitā vīra,",
  "thi-ap20:7.2_0": "ito aṭṭhamake muni;",
  "thi-ap20:7.3_0": "Tādisāhaṁ bhavissāmi,",
  "thi-ap20:7.4_0": "yadi sijjhati nāyaka’.",
  "thi-ap20:8.1_0": "Tadā avoca maṁ satthā,",
  "thi-ap20:8.2_0": "‘bhadde mā bhāyi assasa;",
  "thi-ap20:8.3_0": "Anāgatamhi addhāne,",
  "thi-ap20:8.4_0": "lacchase taṁ manorathaṁ.",
  "thi-ap20:9.1_0": "Satasahassito kappe,",
  "thi-ap20:9.2_0": "okkākakulasambhavo;",
  "thi-ap20:9.3_0": "Gotamo nāma gottena,",
  "thi-ap20:9.4_0": "satthā loke bhavissati.",
  "thi-ap20:10.1_0": "Tassa dhammesu dāyādā,",
  "thi-ap20:10.2_0": "orasā dhammanimmitā;",
  "thi-ap20:10.3_0": "Paṭācārāti nāmena,",
  "thi-ap20:10.4_0": "hessati satthu sāvikā’.",
  "thi-ap20:11.1_0": "Tadāhaṁ muditā hutvā,",
  "thi-ap20:11.2_0": "yāvajīvaṁ tadā jinaṁ;",
  "thi-ap20:11.3_0": "Mettacittā paricariṁ,",
  "thi-ap20:11.4_0": "sasaṅghaṁ lokanāyakaṁ.",
  "thi-ap20:12.1_0": "Tena kammena sukatena,",
  "thi-ap20:12.2_0": "cetanāpaṇidhīhi ca;",
  "thi-ap20:12.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap20:12.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap20:13.1_0": "Imamhi bhaddake kappe,",
  "thi-ap20:13.2_0": "brahmabandhu mahāyaso;",
  "thi-ap20:13.3_0": "Kassapo nāma gottena,",
  "thi-ap20:13.4_0": "uppajji vadataṁ varo.",
  "thi-ap20:14.1_0": "Upaṭṭhāko mahesissa,",
  "thi-ap20:14.2_0": "tadā āsi narissaro;",
  "thi-ap20:14.3_0": "Kāsirājā kikī nāma,",
  "thi-ap20:14.4_0": "bārāṇasipuruttame.",
  "thi-ap20:15.1_0": "Tassāsiṁ tatiyā dhītā,",
  "thi-ap20:15.2_0": "bhikkhunī iti vissutā;",
  "thi-ap20:15.3_0": "Dhammaṁ sutvā jinaggassa,",
  "thi-ap20:15.4_0": "pabbajjaṁ samarocayiṁ.",
  "thi-ap20:16.1_0": "Anujāni na no tāto,",
  "thi-ap20:16.2_0": "agāreva tadā mayaṁ;",
  "thi-ap20:16.3_0": "Vīsavassasahassāni,",
  "thi-ap20:16.4_0": "vicarimha atanditā.",
  "thi-ap20:17.1_0": "Komāribrahmacariyaṁ,",
  "thi-ap20:17.2_0": "rājakaññā sukhedhitā;",
  "thi-ap20:17.3_0": "Buddhopaṭṭhānaniratā,",
  "thi-ap20:17.4_0": "muditā sattadhītaro.",
  "thi-ap20:18.1_0": "Samaṇī samaṇaguttā ca,",
  "thi-ap20:18.2_0": "bhikkhunī bhikkhudāyikā;",
  "thi-ap20:18.3_0": "Dhammā ceva sudhammā ca,",
  "thi-ap20:18.4_0": "sattamī saṅghadāyikā.",
  "thi-ap20:19.1_0": "Ahaṁ uppalavaṇṇā ca,",
  "thi-ap20:19.2_0": "khemā bhaddā ca bhikkhunī;",
  "thi-ap20:19.3_0": "Kisāgotamī dhammadinnā,",
  "thi-ap20:19.4_0": "visākhā hoti sattamī.",
  "thi-ap20:20.1_0": "Tehi kammehi sukatehi,",
  "thi-ap20:20.2_0": "cetanāpaṇidhīhi ca;",
  "thi-ap20:20.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap20:20.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap20:21.1_0": "Pacchime ca bhave dāni,",
  "thi-ap20:21.2_0": "jātā seṭṭhikule ahaṁ;",
  "thi-ap20:21.3_0": "Sāvatthiyaṁ puravare,",
  "thi-ap20:21.4_0": "iddhe phīte mahaddhane.",
  "thi-ap20:22.1_0": "Yadā ca yobbanūpetā,",
  "thi-ap20:22.2_0": "vitakkavasagā ahaṁ;",
  "thi-ap20:22.3_0": "Naraṁ jārapatiṁ disvā,",
  "thi-ap20:22.4_0": "tena saddhiṁ agacchahaṁ.",
  "thi-ap20:23.1_0": "Ekaputtapasūtāhaṁ,",
  "thi-ap20:23.2_0": "dutiyo kucchiyā mamaṁ;",
  "thi-ap20:23.3_0": "Tadāhaṁ mātāpitaro,",
  "thi-ap20:23.4_0": "okkhāmīti sunicchitā.",
  "thi-ap20:24.1_0": "Nārocesiṁ patiṁ mayhaṁ,",
  "thi-ap20:24.2_0": "tadā tamhi pavāsite;",
  "thi-ap20:24.3_0": "Ekikā niggatā gehā,",
  "thi-ap20:24.4_0": "gantuṁ sāvatthimuttamaṁ.",
  "thi-ap20:25.1_0": "Tato me sāmi āgantvā,",
  "thi-ap20:25.2_0": "sambhāvesi pathe mamaṁ;",
  "thi-ap20:25.3_0": "Tadā me kammajā vātā,",
  "thi-ap20:25.4_0": "uppannā atidāruṇā.",
  "thi-ap20:26.1_0": "Uṭṭhito ca mahāmegho,",
  "thi-ap20:26.2_0": "pasūtisamaye mama;",
  "thi-ap20:26.3_0": "Dabbatthāya tadā gantvā,",
  "thi-ap20:26.4_0": "sāmi sappena mārito.",
  "thi-ap20:27.1_0": "Tadā vijātadukkhena,",
  "thi-ap20:27.2_0": "anāthā kapaṇā ahaṁ;",
  "thi-ap20:27.3_0": "Kunnadiṁ pūritaṁ disvā,",
  "thi-ap20:27.4_0": "gacchantī sakulālayaṁ.",
  "thi-ap20:28.1_0": "Bālaṁ ādāya atariṁ,",
  "thi-ap20:28.2_0": "pārakūle ca ekakaṁ;",
  "thi-ap20:28.3_0": "Sāyetvā bālakaṁ puttaṁ,",
  "thi-ap20:28.4_0": "itaraṁ taraṇāyahaṁ.",
  "thi-ap20:29.1_0": "Nivattā ukkuso hāsi,",
  "thi-ap20:29.2_0": "taruṇaṁ vilapantakaṁ;",
  "thi-ap20:29.3_0": "Itarañca vahī soto,",
  "thi-ap20:29.4_0": "sāhaṁ sokasamappitā.",
  "thi-ap20:30.1_0": "Sāvatthinagaraṁ gantvā,",
  "thi-ap20:30.2_0": "assosiṁ sajane mate;",
  "thi-ap20:30.3_0": "Tadā avocaṁ sokaṭṭā,",
  "thi-ap20:30.4_0": "mahāsokasamappitā.",
  "thi-ap20:31.1_0": "‘Ubho puttā kālaṅkatā,",
  "thi-ap20:31.2_0": "panthe mayhaṁ patī mato;",
  "thi-ap20:31.3_0": "Mātā pitā ca bhātā ca,",
  "thi-ap20:31.4_0": "ekacitamhi ḍayhare’.",
  "thi-ap20:32.1_0": "Tadā kisā ca paṇḍu ca,",
  "thi-ap20:32.2_0": "anāthā dīnamānasā;",
  "thi-ap20:32.3_0": "Ito tato bhamantīhaṁ,",
  "thi-ap20:32.4_0": "addasaṁ narasārathiṁ.",
  "thi-ap20:33.1_0": "Tato avoca maṁ satthā,",
  "thi-ap20:33.2_0": "‘putte mā soci assasa;",
  "thi-ap20:33.3_0": "Attānaṁ te gavesassu,",
  "thi-ap20:33.4_0": "kiṁ niratthaṁ vihaññasi.",
  "thi-ap20:34.1_0": "Na santi puttā tāṇāya,",
  "thi-ap20:34.2_0": "na ñātī napi bandhavā;",
  "thi-ap20:34.3_0": "Antakenādhipannassa,",
  "thi-ap20:34.4_0": "natthi ñātīsu tāṇatā’.",
  "thi-ap20:35.1_0": "Taṁ sutvā munino vākyaṁ,",
  "thi-ap20:35.2_0": "paṭhamaṁ phalamajjhagaṁ;",
  "thi-ap20:35.3_0": "Pabbajitvāna naciraṁ,",
  "thi-ap20:35.4_0": "arahattamapāpuṇiṁ.",
  "thi-ap20:36.1_0": "Iddhīsu ca vasī homi,",
  "thi-ap20:36.2_0": "dibbāya sotadhātuyā;",
  "thi-ap20:36.3_0": "Paracittāni jānāmi,",
  "thi-ap20:36.4_0": "satthusāsanakārikā.",
  "thi-ap20:37.1_0": "Pubbenivāsaṁ jānāmi,",
  "thi-ap20:37.2_0": "dibbacakkhu visodhitaṁ;",
  "thi-ap20:37.3_0": "Khepetvā āsave sabbe,",
  "thi-ap20:37.4_0": "visuddhāsiṁ sunimmalā.",
  "thi-ap20:38.1_0": "Tatohaṁ vinayaṁ sabbaṁ,",
  "thi-ap20:38.2_0": "santike sabbadassino;",
  "thi-ap20:38.3_0": "Uggahiṁ sabbavitthāraṁ,",
  "thi-ap20:38.4_0": "byāhariñca yathātathaṁ.",
  "thi-ap20:39.1_0": "Jino tasmiṁ guṇe tuṭṭho,",
  "thi-ap20:39.2_0": "etadagge ṭhapesi maṁ;",
  "thi-ap20:39.3_0": "‘Aggā vinayadhārīnaṁ,",
  "thi-ap20:39.4_0": "paṭācārāva ekikā’.",
  "thi-ap20:40.1_0": "Pariciṇṇo mayā satthā,",
  "thi-ap20:40.2_0": "kataṁ buddhassa sāsanaṁ;",
  "thi-ap20:40.3_0": "Ohito garuko bhāro,",
  "thi-ap20:40.4_0": "bhavanetti samūhatā.",
  "thi-ap20:41.1_0": "Yassatthāya pabbajitā,",
  "thi-ap20:41.2_0": "agārasmānagāriyaṁ;",
  "thi-ap20:41.3_0": "So me attho anuppatto,",
  "thi-ap20:41.4_0": "sabbasaṁyojanakkhayo.",
  "thi-ap20:42.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap20:42.2_0": "…pe…",
  "thi-ap20:42.3_0": "viharāmi anāsavā.",
  "thi-ap20:43.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap20:43.2_0": "…pe…",
  "thi-ap20:43.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap20:44.1_0": "Paṭisambhidā catasso,",
  "thi-ap20:44.2_0": "…pe…",
  "thi-ap20:44.3_0": "kataṁ buddhassa sāsanaṁ”. ",
  "thi-ap20:45.1_0": "Itthaṁ sudaṁ paṭācārā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap20:46.1_0": "Paṭācārātheriyāpadānaṁ dasamaṁ.",
  "thi-ap20:47.1_0": "Ekūposathikavaggo dutiyo.",
  "thi-ap20:48.1_0": "Tassuddānaṁ",
  "thi-ap20:49.1_0": "Ekūposathikā ceva,",
  "thi-ap20:49.2_0": "saḷalā cātha modakā;",
  "thi-ap20:49.3_0": "Ekāsanā pañcadīpā,",
  "thi-ap20:49.4_0": "naḷamālī ca gotamī.",
  "thi-ap20:50.1_0": "Khemā uppalavaṇṇā ca,",
  "thi-ap20:50.2_0": "paṭācārā ca bhikkhunī;",
  "thi-ap20:50.3_0": "Gāthā satāni pañceva,",
  "thi-ap20:50.4_0": "nava cāpi taduttari."
}