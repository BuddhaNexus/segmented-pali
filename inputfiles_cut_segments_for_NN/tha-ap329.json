{
  "tha-ap329:0.1_0": "Therāpadāna",
  "tha-ap329:0.2_0": "Umāpupphiyavagga",
  "tha-ap329:0.3_0": "7. Nigguṇḍipupphiyattheraapadāna",
  "tha-ap329:1.1_0": "“Yadā devo devakāyā,",
  "tha-ap329:1.2_0": "cavate āyusaṅkhayā;",
  "tha-ap329:1.3_0": "Tayo saddā niccharanti,",
  "tha-ap329:1.4_0": "devānaṁ anumodataṁ.",
  "tha-ap329:2.1_0": "‘Ito bho sugatiṁ gaccha,",
  "tha-ap329:2.2_0": "manussānaṁ sahabyataṁ;",
  "tha-ap329:2.3_0": "Manussabhūto saddhamme,",
  "tha-ap329:2.4_0": "labha saddhaṁ anuttaraṁ.",
  "tha-ap329:3.1_0": "Sā te saddhā niviṭṭhāssa,",
  "tha-ap329:3.2_0": "mūlajātā patiṭṭhitā;",
  "tha-ap329:3.3_0": "Yāvajīvaṁ asaṁhīrā,",
  "tha-ap329:3.4_0": "saddhamme suppavedite.",
  "tha-ap329:4.1_0": "Kāyena kusalaṁ katvā,",
  "tha-ap329:4.2_0": "vācāya kusalaṁ bahuṁ;",
  "tha-ap329:4.3_0": "Manasā kusalaṁ katvā,",
  "tha-ap329:4.4_0": "abyāpajjaṁ nirūpadhiṁ.",
  "tha-ap329:5.1_0": "Tato opadhikaṁ puññaṁ,",
  "tha-ap329:5.2_0": "katvā dānena taṁ bahuṁ;",
  "tha-ap329:5.3_0": "Aññepi macce saddhamme,",
  "tha-ap329:5.4_0": "brahmacariye nivesaya’.",
  "tha-ap329:6.1_0": "Imāya anukampāya,",
  "tha-ap329:6.2_0": "devādevaṁ yadā vidū;",
  "tha-ap329:6.3_0": "Cavantaṁ anumodanti,",
  "tha-ap329:6.4_0": "ehi deva punappunaṁ.",
  "tha-ap329:7.1_0": "‘Saṁvego me tadā āsi,",
  "tha-ap329:7.2_0": "devasaṅghe samāgate;",
  "tha-ap329:7.3_0": "Kaṁsu nāma ahaṁ yoniṁ,",
  "tha-ap329:7.4_0": "gamissāmi ito cuto’.",
  "tha-ap329:8.1_0": "Mama saṁvegamaññāya,",
  "tha-ap329:8.2_0": "samaṇo bhāvitindriyo;",
  "tha-ap329:8.3_0": "Mamuddharitukāmo so,",
  "tha-ap329:8.4_0": "āgacchi mama santikaṁ.",
  "tha-ap329:9.1_0": "Sumano nāma nāmena,",
  "tha-ap329:9.2_0": "padumuttarasāvako;",
  "tha-ap329:9.3_0": "Atthadhammānusāsitvā,",
  "tha-ap329:9.4_0": "saṁvejesi mamaṁ tadā.",
  "tha-ap329:10.1_0": "Dvādasamaṁ bhāṇavāraṁ.",
  "tha-ap329:11.1_0": "Tassāhaṁ vacanaṁ sutvā,",
  "tha-ap329:11.2_0": "buddhe cittaṁ pasādayiṁ;",
  "tha-ap329:11.3_0": "Taṁ dhīraṁ abhivādetvā,",
  "tha-ap329:11.4_0": "tattha kālaṅkato ahaṁ.",
  "tha-ap329:12.1_0": "Upapajjiṁ sa tattheva,",
  "tha-ap329:12.2_0": "sukkamūlena codito;",
  "tha-ap329:12.3_0": "Vasanto mātukucchimhi,",
  "tha-ap329:12.4_0": "puna dhāreti mātuyā.",
  "tha-ap329:13.1_0": "Tamhā kāyā cavitvāna,",
  "tha-ap329:13.2_0": "tidase upapajjahaṁ;",
  "tha-ap329:13.3_0": "Etthantare na passāmi,",
  "tha-ap329:13.4_0": "domanassamahaṁ tadā.",
  "tha-ap329:14.1_0": "Tāvatiṁsā cavitvāna,",
  "tha-ap329:14.2_0": "mātukucchiṁ samokkamiṁ;",
  "tha-ap329:14.3_0": "Nikkhamitvāna kucchimhā,",
  "tha-ap329:14.4_0": "kaṇhasukkaṁ ajānahaṁ.",
  "tha-ap329:15.1_0": "Jātiyā sattavassova,",
  "tha-ap329:15.2_0": "ārāmaṁ pāvisiṁ ahaṁ;",
  "tha-ap329:15.3_0": "Gotamassa bhagavato,",
  "tha-ap329:15.4_0": "sakyaputtassa tādino.",
  "tha-ap329:16.1_0": "Vitthārike pāvacane,",
  "tha-ap329:16.2_0": "bāhujaññamhi sāsane;",
  "tha-ap329:16.3_0": "Addasaṁ sāsanakare,",
  "tha-ap329:16.4_0": "bhikkhavo tattha satthuno.",
  "tha-ap329:17.1_0": "Sāvatthi nāma nagaraṁ,",
  "tha-ap329:17.2_0": "rājā tatthāsi kosalo;",
  "tha-ap329:17.3_0": "Rathena nāgayuttena,",
  "tha-ap329:17.4_0": "upesi bodhimuttamaṁ.",
  "tha-ap329:18.1_0": "Tassāhaṁ nāgaṁ disvāna,",
  "tha-ap329:18.2_0": "pubbakammaṁ anussariṁ;",
  "tha-ap329:18.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap329:18.4_0": "samayaṁ agamāsahaṁ.",
  "tha-ap329:19.1_0": "Jātiyā sattavassova,",
  "tha-ap329:19.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap329:19.3_0": "Yo so buddhaṁ upaṭṭhāsi,",
  "tha-ap329:19.4_0": "ānando nāma sāvako.",
  "tha-ap329:20.1_0": "Gatimā dhitimā ceva,",
  "tha-ap329:20.2_0": "satimā ca bahussuto;",
  "tha-ap329:20.3_0": "Rañño cittaṁ pasādento,",
  "tha-ap329:20.4_0": "niyyādesi mahājuti.",
  "tha-ap329:21.1_0": "Tassāhaṁ dhammaṁ sutvāna,",
  "tha-ap329:21.2_0": "pubbakammaṁ anussariṁ;",
  "tha-ap329:21.3_0": "Tattheva ṭhitako santo,",
  "tha-ap329:21.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap329:22.1_0": "Ekaṁsaṁ cīvaraṁ katvā,",
  "tha-ap329:22.2_0": "sire katvāna añjaliṁ;",
  "tha-ap329:22.3_0": "Sambuddhaṁ abhivādetvā,",
  "tha-ap329:22.4_0": "imaṁ vācaṁ udīrayiṁ.",
  "tha-ap329:23.1_0": "‘Padumuttarabuddhassa,",
  "tha-ap329:23.2_0": "dvipadindassa satthuno;",
  "tha-ap329:23.3_0": "Nigguṇḍipupphaṁ paggayha,",
  "tha-ap329:23.4_0": "sīhāsane ṭhapesahaṁ.",
  "tha-ap329:24.1_0": "Tena kammena dvipadinda,",
  "tha-ap329:24.2_0": "lokajeṭṭha narāsabha;",
  "tha-ap329:24.3_0": "Pattomhi acalaṁ ṭhānaṁ,",
  "tha-ap329:24.4_0": "hitvā jayaparājayaṁ’.",
  "tha-ap329:25.1_0": "Pañcavīsasahassamhi,",
  "tha-ap329:25.2_0": "kappānaṁ manujādhipā;",
  "tha-ap329:25.3_0": "Abbudanirabbudāni,",
  "tha-ap329:25.4_0": "aṭṭhaṭṭhāsiṁsu khattiyā.",
  "tha-ap329:26.1_0": "Paṭisambhidā catasso,",
  "tha-ap329:26.2_0": "…pe…",
  "tha-ap329:26.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap329:27.1_0": "Itthaṁ sudaṁ āyasmā nigguṇḍipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap329:28.1_0": "Nigguṇḍipupphiyattherassāpadānaṁ sattamaṁ."
}