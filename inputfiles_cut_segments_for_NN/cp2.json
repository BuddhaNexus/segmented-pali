{
  "cp2:0.1_0": "Cariyāpiṭaka",
  "cp2:0.2_0": "Akittivagga",
  "cp2:0.3_0": "Dānapāramī 2",
  "cp2:0.4_0": "Saṅkhacariya",
  "cp2:1.1_0": "“Punāparaṁ yadā homi,",
  "cp2:1.2_0": "Brāhmaṇo saṅkhasavhayo;",
  "cp2:1.3_0": "Mahāsamuddaṁ taritukāmo,",
  "cp2:1.4_0": "Upagacchāmi paṭṭanaṁ.",
  "cp2:2.1_0": "Tatthaddasaṁ paṭipathe,",
  "cp2:2.2_0": "Sayambhuṁ aparājitaṁ;",
  "cp2:2.3_0": "Kantāraddhānaṁ paṭipannaṁ,",
  "cp2:2.4_0": "Tattāya kaṭhinabhūmiyā.",
  "cp2:3.1_0": "Tamahaṁ paṭipathe disvā,",
  "cp2:3.2_0": "imamatthaṁ vicintayiṁ;",
  "cp2:3.3_0": "‘Idaṁ khettaṁ anuppattaṁ,",
  "cp2:3.4_0": "puññakāmassa jantuno.",
  "cp2:4.1_0": "Yathā kassako puriso,",
  "cp2:4.2_0": "khettaṁ disvā mahāgamaṁ;",
  "cp2:4.3_0": "Tattha bījaṁ na ropeti,",
  "cp2:4.4_0": "na so dhaññena atthiko.",
  "cp2:5.1_0": "Evamevāhaṁ puññakāmo,",
  "cp2:5.2_0": "Disvā khettavaruttamaṁ;",
  "cp2:5.3_0": "Yadi tattha kāraṁ na karomi,",
  "cp2:5.4_0": "Nāhaṁ puññena atthiko.",
  "cp2:6.1_0": "Yathā amacco muddikāmo,",
  "cp2:6.2_0": "rañño antepure jane;",
  "cp2:6.3_0": "Na deti tesaṁ dhanadhaññaṁ,",
  "cp2:6.4_0": "muddito parihāyati.",
  "cp2:7.1_0": "Evamevāhaṁ puññakāmo,",
  "cp2:7.2_0": "Vipulaṁ disvāna dakkhiṇaṁ;",
  "cp2:7.3_0": "Yadi tassa dānaṁ na dadāmi,",
  "cp2:7.4_0": "Parihāyissāmi puññato’.",
  "cp2:8.1_0": "Evāhaṁ cintayitvāna,",
  "cp2:8.2_0": "orohitvā upāhanā;",
  "cp2:8.3_0": "Tassa pādāni vanditvā,",
  "cp2:8.4_0": "adāsiṁ chattupāhanaṁ.",
  "cp2:9.1_0": "Tenevāhaṁ sataguṇato,",
  "cp2:9.2_0": "Sukhumālo sukhedhito;",
  "cp2:9.3_0": "Api ca dānaṁ paripūrento,",
  "cp2:9.4_0": "Evaṁ tassa adāsahan”ti.",
  "cp2:10.1_0": "Saṅkhacariyaṁ dutiyaṁ."
}