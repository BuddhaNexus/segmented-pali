{
  "cp13:0.1_0": "Cariyāpiṭaka",
  "cp13:0.2_0": "Hatthināgavagga",
  "cp13:0.3_0": "Sīlapāramī 3",
  "cp13:0.4_0": "Campeyyanāgacariya",
  "cp13:1.1_0": "“Punāparaṁ yadā homi,",
  "cp13:1.2_0": "campeyyako mahiddhiko;",
  "cp13:1.3_0": "Tadāpi dhammiko āsiṁ,",
  "cp13:1.4_0": "sīlabbatasamappito.",
  "cp13:2.1_0": "Tadāpi maṁ dhammacāriṁ,",
  "cp13:2.2_0": "upavutthaṁ uposathaṁ;",
  "cp13:2.3_0": "Ahituṇḍiko gahetvāna,",
  "cp13:2.4_0": "rājadvāramhi kīḷati.",
  "cp13:3.1_0": "Yaṁ yaṁ so vaṇṇaṁ cintayi,",
  "cp13:3.2_0": "nīlaṁva pītalohitaṁ;",
  "cp13:3.3_0": "Tassa cittānuvattanto,",
  "cp13:3.4_0": "homi cintitasannibho.",
  "cp13:4.1_0": "Thalaṁ kareyyamudakaṁ,",
  "cp13:4.2_0": "udakampi thalaṁ kare;",
  "cp13:4.3_0": "Yadihaṁ tassa pakuppeyyaṁ,",
  "cp13:4.4_0": "khaṇena chārikaṁ kare.",
  "cp13:5.1_0": "Yadi cittavasī hessaṁ,",
  "cp13:5.2_0": "parihāyissāmi sīlato;",
  "cp13:5.3_0": "Sīlena parihīnassa,",
  "cp13:5.4_0": "uttamattho na sijjhati.",
  "cp13:6.1_0": "Kāmaṁ bhijjatuyaṁ kāyo,",
  "cp13:6.2_0": "idheva vikirīyatu;",
  "cp13:6.3_0": "Neva sīlaṁ pabhindeyyaṁ,",
  "cp13:6.4_0": "vikirante bhusaṁ viyā”ti.",
  "cp13:7.1_0": "Campeyyanāgacariyaṁ tatiyaṁ."
}