{
  "tha-ap418:0.1_0": "Therāpadāna",
  "tha-ap418:0.2_0": "Bhaddālivagga",
  "tha-ap418:0.3_0": "6. Ekadīpiyattheraapadāna",
  "tha-ap418:1.1_0": "“Parinibbute sugate,",
  "tha-ap418:1.2_0": "siddhatthe lokanāyake;",
  "tha-ap418:1.3_0": "Sadevamānusā sabbe,",
  "tha-ap418:1.4_0": "pūjenti dvipaduttamaṁ.",
  "tha-ap418:2.1_0": "Āropite ca citake,",
  "tha-ap418:2.2_0": "siddhatthe lokanāyake;",
  "tha-ap418:2.3_0": "Yathāsakena thāmena,",
  "tha-ap418:2.4_0": "citaṁ pūjenti satthuno.",
  "tha-ap418:3.1_0": "Avidūre citakassa,",
  "tha-ap418:3.2_0": "dīpaṁ ujjālayiṁ ahaṁ;",
  "tha-ap418:3.3_0": "Yāva udeti sūriyo,",
  "tha-ap418:3.4_0": "dīpaṁ me tāva ujjali.",
  "tha-ap418:4.1_0": "Tena kammena sukatena,",
  "tha-ap418:4.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap418:4.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap418:4.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap418:5.1_0": "Tattha me sukataṁ byamhaṁ,",
  "tha-ap418:5.2_0": "ekadīpīti ñāyati;",
  "tha-ap418:5.3_0": "Dīpasatasahassāni,",
  "tha-ap418:5.4_0": "byamhe pajjalare mama.",
  "tha-ap418:6.1_0": "Udayantova sūriyo,",
  "tha-ap418:6.2_0": "deho me jotate sadā;",
  "tha-ap418:6.3_0": "Sappabhāhi sarīrassa,",
  "tha-ap418:6.4_0": "āloko hoti me sadā.",
  "tha-ap418:7.1_0": "Tirokuṭṭaṁ tiroselaṁ,",
  "tha-ap418:7.2_0": "samatiggayha pabbataṁ;",
  "tha-ap418:7.3_0": "Samantā yojanasataṁ,",
  "tha-ap418:7.4_0": "passāmi cakkhunā ahaṁ.",
  "tha-ap418:8.1_0": "Sattasattatikkhattuñca,",
  "tha-ap418:8.2_0": "devaloke ramiṁ ahaṁ;",
  "tha-ap418:8.3_0": "Ekatiṁsatikkhattuñca,",
  "tha-ap418:8.4_0": "devarajjamakārayiṁ.",
  "tha-ap418:9.1_0": "Aṭṭhavīsatikkhattuñca,",
  "tha-ap418:9.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap418:9.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap418:9.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap418:10.1_0": "Devalokā cavitvāna,",
  "tha-ap418:10.2_0": "nibbattiṁ mātukucchiyaṁ;",
  "tha-ap418:10.3_0": "Mātukucchigatassāpi,",
  "tha-ap418:10.4_0": "akkhi me na nimīlati.",
  "tha-ap418:11.1_0": "Jātiyā catuvassohaṁ,",
  "tha-ap418:11.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap418:11.3_0": "Aḍḍhamāse asampatte,",
  "tha-ap418:11.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap418:12.1_0": "Dibbacakkhuṁ visodhesiṁ,",
  "tha-ap418:12.2_0": "bhavā sabbe samūhatā;",
  "tha-ap418:12.3_0": "Sabbe kilesā sañchinnā,",
  "tha-ap418:12.4_0": "ekadīpassidaṁ phalaṁ.",
  "tha-ap418:13.1_0": "Tirokuṭṭaṁ tiroselaṁ,",
  "tha-ap418:13.2_0": "pabbatañcāpi kevalaṁ;",
  "tha-ap418:13.3_0": "Samatikkamma passāmi,",
  "tha-ap418:13.4_0": "ekadīpassidaṁ phalaṁ.",
  "tha-ap418:14.1_0": "Visamā me samā honti,",
  "tha-ap418:14.2_0": "andhakāro na vijjati;",
  "tha-ap418:14.3_0": "Nāhaṁ passāmi timiraṁ,",
  "tha-ap418:14.4_0": "ekadīpassidaṁ phalaṁ.",
  "tha-ap418:15.1_0": "Catunnavutito kappe,",
  "tha-ap418:15.2_0": "yaṁ dīpamadadiṁ tadā;",
  "tha-ap418:15.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap418:15.4_0": "ekadīpassidaṁ phalaṁ.",
  "tha-ap418:16.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap418:16.2_0": "…pe…",
  "tha-ap418:16.3_0": "viharāmi anāsavo.",
  "tha-ap418:17.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap418:17.2_0": "…pe…",
  "tha-ap418:17.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap418:18.1_0": "Paṭisambhidā catasso,",
  "tha-ap418:18.2_0": "…pe…",
  "tha-ap418:18.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap418:19.1_0": "Itthaṁ sudaṁ āyasmā ekadīpiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap418:20.1_0": "Ekadīpiyattherassāpadānaṁ chaṭṭhaṁ."
}