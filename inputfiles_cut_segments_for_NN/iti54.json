{
  "iti54:0.1_0": "Itivuttaka 54",
  "iti54:0.2_0": "Tikanipāta",
  "iti54:0.3_0": "Paṭhamavagga",
  "iti54:0.4_0": "Paṭhamaesanāsutta",
  "iti54:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti54:2.1_0": "“Tisso imā, bhikkhave, esanā.",
  "iti54:2.2_0": "Katamā tisso?",
  "iti54:2.3_0": "Kāmesanā, bhavesanā, brahmacariyesanā—",
  "iti54:2.4_0": "imā kho, bhikkhave, tisso esanā”ti.",
  "iti54:2.5_0": "Etamatthaṁ bhagavā avoca.",
  "iti54:2.6_0": "Tatthetaṁ iti vuccati:",
  "iti54:3.1_0": "“Samāhito sampajāno,",
  "iti54:3.2_0": "sato buddhassa sāvako;",
  "iti54:3.3_0": "Esanā ca pajānāti,",
  "iti54:3.4_0": "esanānañca sambhavaṁ.",
  "iti54:4.1_0": "Yattha cetā nirujjhanti,",
  "iti54:4.2_0": "maggañca khayagāminaṁ;",
  "iti54:4.3_0": "Esanānaṁ khayā bhikkhu,",
  "iti54:4.4_0": "nicchāto parinibbuto”ti.",
  "iti54:5.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti54:5.2_0": "Pañcamaṁ."
}