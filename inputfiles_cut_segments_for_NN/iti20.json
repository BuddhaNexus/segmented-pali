{
  "iti20:0.1_0": "Itivuttaka 20",
  "iti20:0.2_0": "Ekakanipāta",
  "iti20:0.3_0": "Dutiyavagga",
  "iti20:0.4_0": "Paduṭṭhacittasutta",
  "iti20:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti20:2.1_0": "“Idhāhaṁ, bhikkhave,",
  "iti20:2.1_1": "ekaccaṁ puggalaṁ paduṭṭhacittaṁ evaṁ cetasā ceto paricca pajānāmi:",
  "iti20:2.2_0": "‘imamhi cāyaṁ samaye puggalo kālaṁ kareyya yathābhataṁ nikkhitto evaṁ niraye’.",
  "iti20:2.3_0": "Taṁ kissa hetu?",
  "iti20:2.4_0": "Cittaṁ hissa, bhikkhave, paduṭṭhaṁ.",
  "iti20:2.5_0": "Cetopadosahetu kho pana, bhikkhave,",
  "iti20:2.5_1": "evam’idhekacce sattā kāyassa bhedā paraṁ maraṇā apāyaṁ duggatiṁ vinipātaṁ nirayaṁ upapajjantī”ti.",
  "iti20:2.6_0": "Etamatthaṁ bhagavā avoca.",
  "iti20:2.7_0": "Tatthetaṁ iti vuccati:",
  "iti20:3.1_0": "“Paduṭṭhacittaṁ ñatvāna,",
  "iti20:3.2_0": "ekaccaṁ idha puggalaṁ;",
  "iti20:3.3_0": "Etamatthañca byākāsi,",
  "iti20:3.4_0": "buddho bhikkhūna santike.",
  "iti20:4.1_0": "Imamhi cāyaṁ samaye,",
  "iti20:4.2_0": "kālaṁ kayirātha puggalo;",
  "iti20:4.3_0": "Nirayaṁ upapajjeyya,",
  "iti20:4.4_0": "cittaṁ hissa padūsitaṁ.",
  "iti20:5.1_0": "Yathā haritvā nikkhipeyya,",
  "iti20:5.2_0": "evamevaṁ tathāvidho;",
  "iti20:5.3_0": "Cetopadosahetu hi,",
  "iti20:5.4_0": "sattā gacchanti duggatin”ti.",
  "iti20:6.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti20:6.2_0": "Dasamaṁ.",
  "iti20:6.3_0": "Dutiyo vaggo.",
  "iti20:7.0_0": "Tassuddānaṁ",
  "iti20:7.1_0": "Moho kodho atha makkho,",
  "iti20:7.2_0": "Vijjā taṇhā sekhaduve ca;",
  "iti20:7.3_0": "Bhedo sāmaggipuggalo,",
  "iti20:7.4_0": "Vaggamāhu dutiyanti vuccatīti."
}