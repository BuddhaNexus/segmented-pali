{
  "atk-abh03a15:0_0": "8. Satipaṭṭhānakathāvaṇṇanā",
  "atk-abh03a15:1_0": "301.",
  "atk-abh03a15:1_1": "Idāni satipaṭṭhānakathā hoti.",
  "atk-abh03a15:1_2": "‘‘Tattha – catunnaṁ,",
  "atk-abh03a15:1_3": "bhikkhave,",
  "atk-abh03a15:1_4": "satipaṭṭhānānaṁ samudayañca atthaṅgamañca desessāmī’’ti (saṁ. ni.",
  "atk-abh03a15:1_5": "5.408) satipaṭṭhānasaṁyutte vuttanayeneva yesaṁ kāyādayo satiyā ārammaṇadhamme gahetvā ‘‘sabbe dhammā satipaṭṭhānā’’ti laddhi,",
  "atk-abh03a15:1_6": "seyyathāpi etarahi andhakānaṁ.",
  "atk-abh03a15:1_7": "Andhakā nāma pubbaseliyā,",
  "atk-abh03a15:1_8": "aparaseliyā,",
  "atk-abh03a15:1_9": "rājagiriyā,",
  "atk-abh03a15:1_10": "siddhatthikāti ime pacchā uppannanikāyā.",
  "atk-abh03a15:1_11": "Tesaṁ laddhivivecanatthaṁ pucchā sakavādissa,",
  "atk-abh03a15:1_12": "paṭiññā paravādissa.",
  "atk-abh03a15:1_13": "Tattha yasmā ‘‘patiṭṭhāti etesūti paṭṭhānā.",
  "atk-abh03a15:1_14": "Kā patiṭṭhāti? Sati.",
  "atk-abh03a15:1_15": "Satiyā paṭṭhānā satipaṭṭhānā’’ti iminā atthena satigocarāpi satipaṭṭhānā.",
  "atk-abh03a15:1_16": "‘‘Patiṭṭhahantīti paṭṭhānā.",
  "atk-abh03a15:1_17": "Kā patiṭṭhahanti? Satiyo.",
  "atk-abh03a15:1_18": "Satiyova paṭṭhānā satipaṭṭhānā’’ti iminā atthena satiyova satipaṭṭhānā.",
  "atk-abh03a15:1_19": "Tasmā dvepi vādā pariyāyena yujjanti.",
  "atk-abh03a15:1_20": "Ye pana taṁ pariyāyaṁ pahāya ekanteneva ‘‘sabbe dhammā satipaṭṭhānā’’ti vadanti,",
  "atk-abh03a15:1_21": "te sandhāya pucchā sakavādissa,",
  "atk-abh03a15:1_22": "ārammaṇavasena paṭiññā paravādissa.",
  "atk-abh03a15:1_23": "Sabbe dhammā satīti anuyuttassa pana sabbesaṁ satisabhāvābhāvato paṭikkhepo tasseva.",
  "atk-abh03a15:1_24": "Tattha khayagāmītiādīni maggavisesanāni.",
  "atk-abh03a15:1_25": "Ekāyanamaggo hi kilesānaṁ khayabhūtaṁ nibbānaṁ gacchatīti khayagāmī.",
  "atk-abh03a15:1_26": "Cattāri saccāni bujjhanto gacchatīti bodhagāmī.",
  "atk-abh03a15:1_27": "Vaṭṭaṁ apacinanto gacchatīti apacayagāmī.",
  "atk-abh03a15:1_28": "Evametehi padehi ‘‘kiṁ te sabbe dhammā evarūpo te ekāyano maggo hotī’’ti pucchati.",
  "atk-abh03a15:1_29": "Anāsavā asaṁyojaniyātiādīnipi lokuttarabhāvaṁ pucchanatthāya vuttāni.",
  "atk-abh03a15:1_30": "Buddhānussatītiādīni pabhedapucchāvasena vuttāni.",
  "atk-abh03a15:2_0": "Cakkhāyatanaṁsatipaṭṭhānantiādi sabbadhammānaṁ pabhedapucchāvasena vuttaṁ.",
  "atk-abh03a15:2_1": "Tatthāpi sativasena paṭikkhepo,",
  "atk-abh03a15:2_2": "ārammaṇavasena paṭiññāti.",
  "atk-abh03a15:2_3": "Evaṁ sabbapañhesu attho veditabbo.",
  "atk-abh03a15:2_4": "Suttasādhanā uttānatthāyevāti.",
  "atk-abh03a15:3_0": "Satipaṭṭhānakathāvaṇṇanā niṭṭhitā."
}