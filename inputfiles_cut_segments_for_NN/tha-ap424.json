{
  "tha-ap424:0.1_0": "Therāpadāna",
  "tha-ap424:0.2_0": "Sakiṁsammajjakavagga",
  "tha-ap424:0.3_0": "2. Ekadussadāyakattheraapadāna",
  "tha-ap424:1.1_0": "“Nagare haṁsavatiyā,",
  "tha-ap424:1.2_0": "ahosiṁ tiṇahārako;",
  "tha-ap424:1.3_0": "Tiṇahārena jīvāmi,",
  "tha-ap424:1.4_0": "tena posemi dārake.",
  "tha-ap424:2.1_0": "Padumuttaro nāma jino,",
  "tha-ap424:2.2_0": "sabbadhammāna pāragū;",
  "tha-ap424:2.3_0": "Tamandhakāraṁ nāsetvā,",
  "tha-ap424:2.4_0": "uppajji lokanāyako.",
  "tha-ap424:3.1_0": "Sake ghare nisīditvā,",
  "tha-ap424:3.2_0": "evaṁ cintesi tāvade;",
  "tha-ap424:3.3_0": "‘Buddho loke samuppanno,",
  "tha-ap424:3.4_0": "deyyadhammo na vijjati.",
  "tha-ap424:4.1_0": "Idaṁ me sāṭakaṁ ekaṁ,",
  "tha-ap424:4.2_0": "natthi me koci dāyako;",
  "tha-ap424:4.3_0": "Dukkho nirayasamphasso,",
  "tha-ap424:4.4_0": "ropayissāmi dakkhiṇaṁ’.",
  "tha-ap424:5.1_0": "Evāhaṁ cintayitvāna,",
  "tha-ap424:5.2_0": "sakaṁ cittaṁ pasādayiṁ;",
  "tha-ap424:5.3_0": "Ekaṁ dussaṁ gahetvāna,",
  "tha-ap424:5.4_0": "buddhaseṭṭhassadāsahaṁ.",
  "tha-ap424:6.1_0": "Ekaṁ dussaṁ daditvāna,",
  "tha-ap424:6.2_0": "ukkuṭṭhiṁ sampavattayiṁ;",
  "tha-ap424:6.3_0": "‘Yadi buddho tuvaṁ vīra,",
  "tha-ap424:6.4_0": "tārehi maṁ mahāmuni’.",
  "tha-ap424:7.1_0": "Padumuttaro lokavidū,",
  "tha-ap424:7.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap424:7.3_0": "Mama dānaṁ pakittento,",
  "tha-ap424:7.4_0": "akā me anumodanaṁ.",
  "tha-ap424:8.1_0": "‘Iminā ekadussena,",
  "tha-ap424:8.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap424:8.3_0": "Kappasatasahassāni,",
  "tha-ap424:8.4_0": "vinipātaṁ na gacchasi.",
  "tha-ap424:9.1_0": "Chattiṁsakkhattuṁ devindo,",
  "tha-ap424:9.2_0": "devarajjaṁ karissasi;",
  "tha-ap424:9.3_0": "Tettiṁsakkhattuṁ rājā ca,",
  "tha-ap424:9.4_0": "cakkavattī bhavissasi.",
  "tha-ap424:10.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap424:10.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap424:10.3_0": "Devaloke manusse vā,",
  "tha-ap424:10.4_0": "saṁsaranto tuvaṁ bhave.",
  "tha-ap424:11.1_0": "Rūpavā guṇasampanno,",
  "tha-ap424:11.2_0": "anavakkantadehavā;",
  "tha-ap424:11.3_0": "Akkhobhaṁ amitaṁ dussaṁ,",
  "tha-ap424:11.4_0": "labhissasi yadicchakaṁ’.",
  "tha-ap424:12.1_0": "Idaṁ vatvāna sambuddho,",
  "tha-ap424:12.2_0": "jalajuttamanāmako;",
  "tha-ap424:12.3_0": "Nabhaṁ abbhuggamī vīro,",
  "tha-ap424:12.4_0": "haṁsarājāva ambare.",
  "tha-ap424:13.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap424:13.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap424:13.3_0": "Bhoge me ūnatā natthi,",
  "tha-ap424:13.4_0": "ekadussassidaṁ phalaṁ.",
  "tha-ap424:14.1_0": "Paduddhāre paduddhāre,",
  "tha-ap424:14.2_0": "dussaṁ nibbattate mamaṁ;",
  "tha-ap424:14.3_0": "Heṭṭhā dussamhi tiṭṭhāmi,",
  "tha-ap424:14.4_0": "uparicchadanaṁ mama.",
  "tha-ap424:15.1_0": "Cakkavāḷaṁ upādāya,",
  "tha-ap424:15.2_0": "sakānanaṁ sapabbataṁ;",
  "tha-ap424:15.3_0": "Icchamāno cahaṁ ajja,",
  "tha-ap424:15.4_0": "dussehacchādayeyya taṁ.",
  "tha-ap424:16.1_0": "Teneva ekadussena,",
  "tha-ap424:16.2_0": "saṁsaranto bhavābhave;",
  "tha-ap424:16.3_0": "Suvaṇṇavaṇṇo hutvāna,",
  "tha-ap424:16.4_0": "saṁsarāmi bhavābhave.",
  "tha-ap424:17.1_0": "Vipākaṁ ekadussassa,",
  "tha-ap424:17.2_0": "nājjhagaṁ katthacikkhayaṁ;",
  "tha-ap424:17.3_0": "Ayaṁ me antimā jāti,",
  "tha-ap424:17.4_0": "vipaccati idhāpi me.",
  "tha-ap424:18.1_0": "Satasahassito kappe,",
  "tha-ap424:18.2_0": "yaṁ dussamadadiṁ tadā;",
  "tha-ap424:18.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap424:18.4_0": "ekadussassidaṁ phalaṁ.",
  "tha-ap424:19.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap424:19.2_0": "…pe…",
  "tha-ap424:19.3_0": "viharāmi anāsavo.",
  "tha-ap424:20.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap424:20.2_0": "…pe…",
  "tha-ap424:20.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap424:21.1_0": "Paṭisambhidā catasso,",
  "tha-ap424:21.2_0": "…pe…",
  "tha-ap424:21.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap424:22.1_0": "Itthaṁ sudaṁ āyasmā ekadussadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap424:23.1_0": "Ekadussadāyakattherassāpadānaṁ dutiyaṁ."
}