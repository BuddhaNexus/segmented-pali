{
  "mil5.3.7:0.1_0": "Milindapañha",
  "mil5.3.7:0.2_0": "Meṇḍakapañha",
  "mil5.3.7:0.3_0": "Paṇāmitavagga",
  "mil5.3.7:0.4_0": "7. Buddhapūjanapañha",
  "mil5.3.7:1.1_0": "“Bhante nāgasena,",
  "mil5.3.7:1.1_1": "bhāsitampetaṁ tathāgatena ‘abyāvaṭā tumhe, ānanda,",
  "mil5.3.7:1.1_2": "hotha tathāgatassa sarīrapūjāyā’ti.",
  "mil5.3.7:1.2_0": "Puna ca bhaṇitaṁ—",
  "mil5.3.7:2.1_0": "‘Pūjetha naṁ pūjaniyassa dhātuṁ,",
  "mil5.3.7:2.2_0": "Evaṁ kira saggamito gamissathā’ti.",
  "mil5.3.7:3.1_0": "Yadi, bhante nāgasena, tathāgatena bhaṇitaṁ—",
  "mil5.3.7:3.2_0": "‘abyāvaṭā tumhe, ānanda,",
  "mil5.3.7:3.2_1": "hotha tathāgatassa sarīrapūjāyā’ti,",
  "mil5.3.7:3.2_2": "tena hi ‘pūjetha naṁ pūjaniyassa dhātuṁ,",
  "mil5.3.7:3.2_3": "evaṁ karā saggamito gamissathā’ti yaṁ vacanaṁ,",
  "mil5.3.7:3.2_4": "taṁ micchā.",
  "mil5.3.7:3.3_0": "Yadi tathāgatena bhaṇitaṁ—",
  "mil5.3.7:3.4_0": "‘pūjetha naṁ pūjaniyassa dhātuṁ,",
  "mil5.3.7:3.4_1": "evaṁ karā saggamito gamissathā’ti,",
  "mil5.3.7:3.4_2": "tena hi ‘abyāvaṭā tumhe, ānanda,",
  "mil5.3.7:3.4_3": "hotha tathāgatassa sarīrapūjāyā’ti tampi vacanaṁ micchā.",
  "mil5.3.7:3.5_0": "Ayampi ubhato koṭiko pañho tavānuppatto, so tayā nibbāhitabbo”ti.",
  "mil5.3.7:4.1_0": "“Bhāsitampetaṁ, mahārāja,",
  "mil5.3.7:4.1_1": "bhagavatā ‘abyāvaṭā tumhe, ānanda,",
  "mil5.3.7:4.1_2": "hotha tathāgatassa sarīrapūjāyā’ti,",
  "mil5.3.7:4.1_3": "puna ca bhaṇitaṁ—",
  "mil5.3.7:4.2_0": "‘pūjetha naṁ pūjaniyassa dhātuṁ,",
  "mil5.3.7:4.2_1": "evaṁ karā saggamito gamissathā’ti,",
  "mil5.3.7:4.2_2": "tañca pana na sabbesaṁ jinaputtānaṁyeva ārabbha bhaṇitaṁ—",
  "mil5.3.7:4.3_0": "‘abyāvaṭā tumhe, ānanda, hotha tathāgatassa sarīrapūjāyā’ti.",
  "mil5.3.7:4.4_0": "Akammaṁ hetaṁ, mahārāja,",
  "mil5.3.7:4.4_1": "jinaputtānaṁ yadidaṁ pūjā,",
  "mil5.3.7:4.4_2": "sammasanaṁ saṅkhārānaṁ,",
  "mil5.3.7:4.4_3": "yoniso manasikāro,",
  "mil5.3.7:4.4_4": "satipaṭṭhānānupassanā,",
  "mil5.3.7:4.4_5": "ārammaṇasāraggāho,",
  "mil5.3.7:4.4_6": "kilesayuddhaṁ,",
  "mil5.3.7:4.4_7": "sadatthamanuyuñjanā,",
  "mil5.3.7:4.4_8": "etaṁ jinaputtānaṁ karaṇīyaṁ,",
  "mil5.3.7:4.4_9": "avasesānaṁ devamanussānaṁ pūjā karaṇīyā.",
  "mil5.3.7:5.1_0": "Yathā, mahārāja,",
  "mil5.3.7:5.1_1": "mahiyā rājaputtānaṁ hatthiassarathadhanutharulekhamuddāsikkhākhaggamantasutisammutiyuddhayujjhāpanakiriyā karaṇīyā,",
  "mil5.3.7:5.1_2": "avasesānaṁ puthuvessasuddānaṁ kasi vaṇijjā gorakkhā karaṇīyā;",
  "mil5.3.7:5.2_0": "evameva kho, mahārāja,",
  "mil5.3.7:5.2_1": "akammaṁ hetaṁ jinaputtānaṁ yadidaṁ pūjā,",
  "mil5.3.7:5.2_2": "sammasanaṁ saṅkhārānaṁ,",
  "mil5.3.7:5.2_3": "yoniso manasikāro,",
  "mil5.3.7:5.2_4": "satipaṭṭhānānupassanā,",
  "mil5.3.7:5.2_5": "ārammaṇasāraggāho,",
  "mil5.3.7:5.2_6": "kilesayuddhaṁ,",
  "mil5.3.7:5.2_7": "sadatthamanuyuñjanā,",
  "mil5.3.7:5.2_8": "etaṁ jinaputtānaṁ karaṇīyaṁ,",
  "mil5.3.7:5.2_9": "avasesānaṁ devamanussānaṁ pūjā karaṇīyā.",
  "mil5.3.7:6.1_0": "Yathā vā pana, mahārāja,",
  "mil5.3.7:6.1_1": "brāhmaṇamāṇavakānaṁ iruvedaṁ yajuvedaṁ sāmavedaṁ athabbaṇavedaṁ lakkhaṇaṁ itihāsaṁ purāṇaṁ nighaṇḍu keṭubhaṁ",
  "mil5.3.7:6.1_2": "akkharappabhedaṁ padaṁ veyyākaraṇaṁ bhāsamaggaṁ uppātaṁ supinaṁ nimittaṁ chaḷaṅgaṁ candaggāhaṁ sūriyaggāhaṁ",
  "mil5.3.7:6.1_3": "sukkarāhucaritaṁ uḷuggahayuddhaṁ devadundubhissaraṁ okkanti ukkāpātaṁ bhūmikammaṁ disādāhaṁ bhummantalikkhaṁ",
  "mil5.3.7:6.1_4": "jotisaṁ lokāyatikaṁ sācakkaṁ migacakkaṁ antaracakkaṁ missakuppādaṁ sakuṇarutaravitaṁ sikkhā karaṇīyā,",
  "mil5.3.7:6.1_5": "avasesānaṁ puthuvessasuddānaṁ kasi vaṇijjā gorakkhā karaṇīyā;",
  "mil5.3.7:6.2_0": "evameva kho, mahārāja,",
  "mil5.3.7:6.2_1": "akammaṁ hetaṁ jinaputtānaṁ yadidaṁ pūjā,",
  "mil5.3.7:6.2_2": "sammasanaṁ saṅkhārānaṁ,",
  "mil5.3.7:6.2_3": "yoniso manasikāro,",
  "mil5.3.7:6.2_4": "satipaṭṭhānānupassanā,",
  "mil5.3.7:6.2_5": "ārammaṇasāraggāho,",
  "mil5.3.7:6.2_6": "kilesayuddhaṁ,",
  "mil5.3.7:6.2_7": "sadatthamanuyuñjanā,",
  "mil5.3.7:6.2_8": "etaṁ jinaputtānaṁ karaṇīyaṁ,",
  "mil5.3.7:6.2_9": "avasesānaṁ devamanussānaṁ pūjā karaṇīyā, tasmā, mahārāja,",
  "mil5.3.7:6.2_10": "tathāgato ‘mā ime akamme yuñjantu,",
  "mil5.3.7:6.2_11": "kamme ime yuñjantū’ti—",
  "mil5.3.7:6.3_0": "āha—",
  "mil5.3.7:6.4_0": "‘abyāvaṭā tumhe, ānanda, hotha tathāgatassa sarīrapūjāyā’ti.",
  "mil5.3.7:6.5_0": "Yadetaṁ, mahārāja,",
  "mil5.3.7:6.5_1": "tathāgato na bhaṇeyya,",
  "mil5.3.7:6.5_2": "pattacīvarampi attano pariyādāpetvā bhikkhū buddhapūjaṁyeva kareyyun”ti.",
  "mil5.3.7:6.6_0": "“Sādhu, bhante nāgasena, evametaṁ tathā sampaṭicchāmī”ti.",
  "mil5.3.7:7.1_0": "Buddhapūjanapañho sattamo."
}