{
  "mil6.2.10:0.1_0": "Milindapañha",
  "mil6.2.10:0.2_0": "Anumānapañha",
  "mil6.2.10:0.3_0": "Nippapañcavagga",
  "mil6.2.10:0.4_0": "10. Kaṭhinatapanapañha",
  "mil6.2.10:1.1_0": "“Bhante nāgasena,",
  "mil6.2.10:1.1_1": "kissa hemante sūriyo kaṭhinaṁ tapati, no tathā gimhe”ti?",
  "mil6.2.10:1.2_0": "“Gimhe, mahārāja, anupahataṁ hoti rajojallaṁ,",
  "mil6.2.10:1.2_1": "vātakkhubhitā reṇū gaganānugatā honti,",
  "mil6.2.10:1.2_2": "ākāsepi abbhā subahalā honti,",
  "mil6.2.10:1.2_3": "mahāvāto ca adhimattaṁ vāyati,",
  "mil6.2.10:1.2_4": "te sabbe nānākulā samāyutā sūriyaraṁsiyo pidahanti,",
  "mil6.2.10:1.2_5": "tena gimhe sūriyo mandaṁ tapati.",
  "mil6.2.10:2.1_0": "Hemante pana, mahārāja, heṭṭhā pathavī nibbutā hoti,",
  "mil6.2.10:2.1_1": "upari mahāmegho upaṭṭhito hoti, upasantaṁ hoti rajojallaṁ,",
  "mil6.2.10:2.1_2": "reṇu ca santasantaṁ gagane carati,",
  "mil6.2.10:2.1_3": "vigatavalāhako ca hoti ākāso, vāto ca mandamandaṁ vāyati,",
  "mil6.2.10:2.1_4": "etesaṁ uparatiyā visuddhā honti sūriyaraṁsiyo,",
  "mil6.2.10:2.1_5": "upaghātavimuttassa sūriyassa tāpo ativiya tapati.",
  "mil6.2.10:2.2_0": "Idamettha, mahārāja, kāraṇaṁ,",
  "mil6.2.10:2.2_1": "yena kāraṇena sūriyo hemante kaṭhinaṁ tapati, no tathā gimhe”ti.",
  "mil6.2.10:2.3_0": "“Sabbītimutto, bhante, sūriyo kaṭhinaṁ tapati,",
  "mil6.2.10:2.3_1": "meghādisahagato kaṭhinaṁ na tapatī”ti.",
  "mil6.2.10:3.1_0": "Kaṭhinatapanapañho dasamo.",
  "mil6.2.10:4.1_0": "Nippapañcavaggo dutiyo.",
  "mil6.2.10:5.1_0": "Imasmiṁ vagge dasa pañhā."
}