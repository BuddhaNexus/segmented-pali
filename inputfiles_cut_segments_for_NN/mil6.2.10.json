{
  "mil6.2.10:0.1_0": "Milindapañha",
  "mil6.2.10:0.2_0": "Anumānapañha",
  "mil6.2.10:0.3_0": "Nippapañcavagga",
  "mil6.2.10:0.4_0": "10. Kaṭhinatapanapañha",
  "mil6.2.10:1.1_0": "“Bhante nāgasena, kissa hemante sūriyo kaṭhinaṁ tapati, no tathā gimhe”ti?",
  "mil6.2.10:1.2_0": "“Gimhe, mahārāja,",
  "mil6.2.10:1.2_1": "anupahataṁ hoti rajojallaṁ,",
  "mil6.2.10:1.2_2": "vātakkhubhitā reṇū gaganānugatā honti,",
  "mil6.2.10:1.2_3": "ākāsepi abbhā subahalā honti,",
  "mil6.2.10:1.2_4": "mahāvāto ca adhimattaṁ vāyati,",
  "mil6.2.10:1.2_5": "te sabbe nānākulā samāyutā sūriyaraṁsiyo pidahanti,",
  "mil6.2.10:1.2_6": "tena gimhe sūriyo mandaṁ tapati.",
  "mil6.2.10:2.1_0": "Hemante pana, mahārāja,",
  "mil6.2.10:2.1_1": "heṭṭhā pathavī nibbutā hoti,",
  "mil6.2.10:2.1_2": "upari mahāmegho upaṭṭhito hoti,",
  "mil6.2.10:2.1_3": "upasantaṁ hoti rajojallaṁ,",
  "mil6.2.10:2.1_4": "reṇu ca santasantaṁ gagane carati,",
  "mil6.2.10:2.1_5": "vigatavalāhako ca hoti ākāso,",
  "mil6.2.10:2.1_6": "vāto ca mandamandaṁ vāyati,",
  "mil6.2.10:2.1_7": "etesaṁ uparatiyā visuddhā honti sūriyaraṁsiyo,",
  "mil6.2.10:2.1_8": "upaghātavimuttassa sūriyassa tāpo ativiya tapati.",
  "mil6.2.10:2.2_0": "Idamettha, mahārāja, kāraṇaṁ, yena kāraṇena sūriyo hemante kaṭhinaṁ tapati, no tathā gimhe”ti.",
  "mil6.2.10:2.3_0": "“Sabbītimutto, bhante, sūriyo kaṭhinaṁ tapati, meghādisahagato kaṭhinaṁ na tapatī”ti.",
  "mil6.2.10:3.1_0": "Kaṭhinatapanapañho dasamo.",
  "mil6.2.10:4.1_0": "Nippapañcavaggo dutiyo.",
  "mil6.2.10:5.1_0": "Imasmiṁ vagge dasa pañhā."
}