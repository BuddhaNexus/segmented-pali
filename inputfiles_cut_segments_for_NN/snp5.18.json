{
  "snp5.18:0.1_0": "Sutta Nipāta 5.18",
  "snp5.18:0.2_0": "Pārāyanatthutigāthā",
  "snp5.18:1.1_0": "Idamavoca bhagavā magadhesu viharanto pāsāṇake cetiye,",
  "snp5.18:1.1_1": "paricārakasoḷasānaṁ brāhmaṇānaṁ ajjhiṭṭho puṭṭho puṭṭho pañhaṁ byākāsi.",
  "snp5.18:1.2_0": "Ekamekassa cepi pañhassa atthamaññāya dhammamaññāya dhammānudhammaṁ paṭipajjeyya,",
  "snp5.18:1.2_1": "gaccheyyeva jarāmaraṇassa pāraṁ.",
  "snp5.18:1.3_0": "Pāraṅgamanīyā ime dhammāti, tasmā imassa dhammapariyāyassa pārāyananteva adhivacanaṁ.",
  "snp5.18:2.1_0": "Ajito tissametteyyo,",
  "snp5.18:2.2_0": "puṇṇako atha mettagū;",
  "snp5.18:2.3_0": "Dhotako upasīvo ca,",
  "snp5.18:2.4_0": "nando ca atha hemako.",
  "snp5.18:3.1_0": "Todeyya-kappā dubhayo,",
  "snp5.18:3.2_0": "jatukaṇṇī ca paṇḍito;",
  "snp5.18:3.3_0": "Bhadrāvudho udayo ca,",
  "snp5.18:3.4_0": "posālo cāpi brāhmaṇo;",
  "snp5.18:3.5_0": "Mogharājā ca medhāvī,",
  "snp5.18:3.6_0": "piṅgiyo ca mahāisi.",
  "snp5.18:4.1_0": "Ete buddhaṁ upāgacchuṁ,",
  "snp5.18:4.2_0": "sampannacaraṇaṁ isiṁ;",
  "snp5.18:4.3_0": "Pucchantā nipuṇe pañhe,",
  "snp5.18:4.4_0": "buddhaseṭṭhaṁ upāgamuṁ.",
  "snp5.18:5.1_0": "Tesaṁ buddho pabyākāsi,",
  "snp5.18:5.2_0": "pañhe puṭṭho yathātathaṁ;",
  "snp5.18:5.3_0": "Pañhānaṁ veyyākaraṇena,",
  "snp5.18:5.4_0": "tosesi brāhmaṇe muni.",
  "snp5.18:6.1_0": "Te tositā cakkhumatā,",
  "snp5.18:6.2_0": "buddhenādiccabandhunā;",
  "snp5.18:6.3_0": "Brahmacariyamacariṁsu,",
  "snp5.18:6.4_0": "varapaññassa santike.",
  "snp5.18:7.1_0": "Ekamekassa pañhassa,",
  "snp5.18:7.2_0": "yathā buddhena desitaṁ;",
  "snp5.18:7.3_0": "Tathā yo paṭipajjeyya,",
  "snp5.18:7.4_0": "gacche pāraṁ apārato.",
  "snp5.18:8.1_0": "Apārā pāraṁ gaccheyya,",
  "snp5.18:8.2_0": "bhāvento maggamuttamaṁ;",
  "snp5.18:8.3_0": "Maggo so pāraṁ gamanāya,",
  "snp5.18:8.4_0": "tasmā pārāyanaṁ iti."
}