{
  "tha-ap412:0.1_0": "Therāpadāna",
  "tha-ap412:0.2_0": "Metteyyavagga",
  "tha-ap412:0.3_0": "10. Udenattheraapadāna",
  "tha-ap412:1.1_0": "“Himavantassāvidūre,",
  "tha-ap412:1.2_0": "padumo nāma pabbato;",
  "tha-ap412:1.3_0": "Assamo sukato mayhaṁ,",
  "tha-ap412:1.4_0": "paṇṇasālā sumāpitā.",
  "tha-ap412:2.1_0": "Nadiyo sandare tattha,",
  "tha-ap412:2.2_0": "supatitthā manoramā;",
  "tha-ap412:2.3_0": "Acchodakā sītajalā,",
  "tha-ap412:2.4_0": "sandare nadiyo sadā.",
  "tha-ap412:3.1_0": "Pāṭhīnā pāvusā macchā,",
  "tha-ap412:3.2_0": "balajā muñjarohitā;",
  "tha-ap412:3.3_0": "Sobhentā nadiyo ete,",
  "tha-ap412:3.4_0": "vasanti nadiyā sadā.",
  "tha-ap412:4.1_0": "Ambajambūhi sañchannā,",
  "tha-ap412:4.2_0": "kareritilakā tathā;",
  "tha-ap412:4.3_0": "Uddālakā pāṭaliyo,",
  "tha-ap412:4.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:5.1_0": "Aṅkolakā bimbijālā,",
  "tha-ap412:5.2_0": "māyākārī ca pupphitā;",
  "tha-ap412:5.3_0": "Gandhena upavāyantā,",
  "tha-ap412:5.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:6.1_0": "Atimuttā sattalikā,",
  "tha-ap412:6.2_0": "nāgā sālā ca pupphitā;",
  "tha-ap412:6.3_0": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:6.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:7.1_0": "Kosambā saḷalā nīpā,",
  "tha-ap412:7.2_0": "aṭṭhaṅgāpi ca pupphitā;",
  "tha-ap412:7.3_0": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:7.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:8.1_0": "Harītakā āmalakā,",
  "tha-ap412:8.2_0": "ambajambuvibhītakā;",
  "tha-ap412:8.3_0": "Kolā bhallātakā billā,",
  "tha-ap412:8.4_0": "phalāni bahu assame.",
  "tha-ap412:9.1_0": "Kalambā kandalī tattha,",
  "tha-ap412:9.2_0": "pupphanti mama assame;",
  "tha-ap412:9.3_0": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:9.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:10.1_0": "Asokapiṇḍivārī ca,",
  "tha-ap412:10.2_0": "nimbarukkhā ca pupphitā;",
  "tha-ap412:10.3_0": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:10.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:11.1_0": "Punnāgā giripunnāgā,",
  "tha-ap412:11.2_0": "timirā tattha pupphitā;",
  "tha-ap412:11.3_0": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:11.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:12.1_0": "Nigguṇḍī sirinigguṇḍī,",
  "tha-ap412:12.2_0": "camparukkhettha pupphitā;",
  "tha-ap412:12.3_0": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:12.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:13.1_0": "Avidūre pokkharaṇī,",
  "tha-ap412:13.2_0": "cakkavākūpakūjitā;",
  "tha-ap412:13.3_0": "Mandālakehi sañchannā,",
  "tha-ap412:13.4_0": "padumuppalakehi ca.",
  "tha-ap412:14.1_0": "Acchodakā sītajalā,",
  "tha-ap412:14.2_0": "supatitthā manoramā;",
  "tha-ap412:14.3_0": "Acchā phalikasamānā,",
  "tha-ap412:14.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:15.1_0": "Padumā pupphare tattha,",
  "tha-ap412:15.2_0": "puṇḍarīkā ca uppalā;",
  "tha-ap412:15.3_0": "Mandālakehi sañchannā,",
  "tha-ap412:15.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:16.1_0": "Pāṭhīnā pāvusā macchā,",
  "tha-ap412:16.2_0": "balajā muñjarohitā;",
  "tha-ap412:16.3_0": "Vicarantāva te tattha,",
  "tha-ap412:16.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:17.1_0": "Kumbhīlā susumārā ca,",
  "tha-ap412:17.2_0": "kacchapā ca gahā bahū;",
  "tha-ap412:17.3_0": "Ogahā ajagarā ca,",
  "tha-ap412:17.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:18.1_0": "Pārevatā ravihaṁsā,",
  "tha-ap412:18.2_0": "cakkavākā nadīcarā;",
  "tha-ap412:18.3_0": "Dindibhā sāḷikā cettha,",
  "tha-ap412:18.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:19.1_0": "Nayitā ambagandhī ca,",
  "tha-ap412:19.2_0": "ketakā tattha pupphitā;",
  "tha-ap412:19.3_0": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:19.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:20.1_0": "Sīhā byagghā ca dīpī ca,",
  "tha-ap412:20.2_0": "acchakokataracchakā;",
  "tha-ap412:20.3_0": "Anusañcarantā pavane,",
  "tha-ap412:20.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:21.1_0": "Jaṭābhārena bharitā,",
  "tha-ap412:21.2_0": "ajinuttaravāsanā;",
  "tha-ap412:21.3_0": "Anusañcarantā pavane,",
  "tha-ap412:21.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:22.1_0": "Ajinānidharā ete,",
  "tha-ap412:22.2_0": "nipakā santavuttino;",
  "tha-ap412:22.3_0": "Appāhārāva te sabbe,",
  "tha-ap412:22.4_0": "sobhenti mama assamaṁ.",
  "tha-ap412:23.1_0": "Khāribhāraṁ gahetvāna,",
  "tha-ap412:23.2_0": "ajjhogayha vanaṁ tadā;",
  "tha-ap412:23.3_0": "Mūlaphalāni bhuñjantā,",
  "tha-ap412:23.4_0": "vasanti assame tadā.",
  "tha-ap412:24.1_0": "Na te dāruṁ āharanti,",
  "tha-ap412:24.2_0": "udakaṁ pādadhovanaṁ;",
  "tha-ap412:24.3_0": "Sabbesaṁ ānubhāvena,",
  "tha-ap412:24.4_0": "sayamevāharīyati.",
  "tha-ap412:25.1_0": "Cullāsītisahassāni,",
  "tha-ap412:25.2_0": "isayettha samāgatā;",
  "tha-ap412:25.3_0": "Sabbeva jhāyino ete,",
  "tha-ap412:25.4_0": "uttamatthagavesakā.",
  "tha-ap412:26.1_0": "Tapassino brahmacārī,",
  "tha-ap412:26.2_0": "codentā appanāva te;",
  "tha-ap412:26.3_0": "Ambarāvacarā sabbe,",
  "tha-ap412:26.4_0": "vasanti assame tadā.",
  "tha-ap412:27.1_0": "Pañcāhaṁ sannipatanti,",
  "tha-ap412:27.2_0": "ekaggā santavuttino;",
  "tha-ap412:27.3_0": "Aññoññaṁ abhivādetvā,",
  "tha-ap412:27.4_0": "pakkamanti disāmukhā.",
  "tha-ap412:28.1_0": "Padumuttaro nāma jino,",
  "tha-ap412:28.2_0": "sabbadhammāna pāragū;",
  "tha-ap412:28.3_0": "Tamandhakāraṁ vidhamaṁ,",
  "tha-ap412:28.4_0": "uppajji tāvade jino.",
  "tha-ap412:29.1_0": "Mama assamasāmantā,",
  "tha-ap412:29.2_0": "yakkho āsi mahiddhiko;",
  "tha-ap412:29.3_0": "So me saṁsittha sambuddhaṁ,",
  "tha-ap412:29.4_0": "jalajuttamanāyakaṁ.",
  "tha-ap412:30.1_0": "‘Esa buddho samuppanno,",
  "tha-ap412:30.2_0": "Padumuttaro mahāmuni;",
  "tha-ap412:30.3_0": "Khippaṁ gantvāna sambuddhaṁ,",
  "tha-ap412:30.4_0": "Payirūpāsa mārisa’.",
  "tha-ap412:31.1_0": "Yakkhassa vacanaṁ sutvā,",
  "tha-ap412:31.2_0": "vippasannena cetasā;",
  "tha-ap412:31.3_0": "Assamaṁ saṁsāmetvāna,",
  "tha-ap412:31.4_0": "nikkhamiṁ vipinā tadā.",
  "tha-ap412:32.1_0": "Ceḷeva ḍayhamānamhi,",
  "tha-ap412:32.2_0": "nikkhamitvāna assamā;",
  "tha-ap412:32.3_0": "Ekarattiṁ nivāsetvā,",
  "tha-ap412:32.4_0": "upagacchiṁ vināyakaṁ.",
  "tha-ap412:33.1_0": "Padumuttaro lokavidū,",
  "tha-ap412:33.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap412:33.3_0": "Catusaccaṁ pakāsento,",
  "tha-ap412:33.4_0": "desesi amataṁ padaṁ.",
  "tha-ap412:34.1_0": "Suphullaṁ padumaṁ gayha,",
  "tha-ap412:34.2_0": "upagantvā mahesino;",
  "tha-ap412:34.3_0": "Pasannacitto sumano,",
  "tha-ap412:34.4_0": "buddhassa abhiropayiṁ.",
  "tha-ap412:35.1_0": "Pūjayitvāna sambuddhaṁ,",
  "tha-ap412:35.2_0": "jalajuttamanāyakaṁ;",
  "tha-ap412:35.3_0": "Ekaṁsaṁ ajinaṁ katvā,",
  "tha-ap412:35.4_0": "santhaviṁ lokanāyakaṁ.",
  "tha-ap412:36.1_0": "‘Yena ñāṇena sambuddho,",
  "tha-ap412:36.2_0": "vasatīha anāsavo;",
  "tha-ap412:36.3_0": "Taṁ ñāṇaṁ kittayissāmi,",
  "tha-ap412:36.4_0": "suṇātha mama bhāsato.",
  "tha-ap412:37.1_0": "Saṁsārasotaṁ chinditvā,",
  "tha-ap412:37.2_0": "tāresi sabbapāṇinaṁ;",
  "tha-ap412:37.3_0": "Tava dhammaṁ suṇitvāna,",
  "tha-ap412:37.4_0": "taṇhāsotaṁ taranti te.",
  "tha-ap412:38.1_0": "Tuvaṁ satthā ca ketu ca,",
  "tha-ap412:38.2_0": "dhajo yūpo ca pāṇinaṁ;",
  "tha-ap412:38.3_0": "Parāyaṇo patiṭṭhā ca,",
  "tha-ap412:38.4_0": "dīpo ca dvipaduttama.",
  "tha-ap412:39.1_0": "Yāvatā gaṇino loke,",
  "tha-ap412:39.2_0": "satthavāhā pavuccare;",
  "tha-ap412:39.3_0": "Tuvaṁ aggosi sabbaññu,",
  "tha-ap412:39.4_0": "tava antogadhāva te.",
  "tha-ap412:40.1_0": "Tava ñāṇena sabbaññu,",
  "tha-ap412:40.2_0": "tāresi janataṁ bahuṁ;",
  "tha-ap412:40.3_0": "Tava dassanamāgamma,",
  "tha-ap412:40.4_0": "dukkhassantaṁ karissare.",
  "tha-ap412:41.1_0": "Ye kecime gandhajātā,",
  "tha-ap412:41.2_0": "loke vāyanti cakkhuma;",
  "tha-ap412:41.3_0": "Tava gandhasamo natthi,",
  "tha-ap412:41.4_0": "puññakkhette mahāmune.",
  "tha-ap412:42.1_0": "Tiracchānayoniṁ nirayaṁ,",
  "tha-ap412:42.2_0": "parimocesi cakkhuma;",
  "tha-ap412:42.3_0": "Asaṅkhataṁ padaṁ santaṁ,",
  "tha-ap412:42.4_0": "desesi tvaṁ mahāmune’.",
  "tha-ap412:43.1_0": "Padumuttaro lokavidū,",
  "tha-ap412:43.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap412:43.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap412:43.4_0": "imā gāthā abhāsatha.",
  "tha-ap412:44.1_0": "‘Yo me ñāṇaṁ apūjesi,",
  "tha-ap412:44.2_0": "pasanno sehi pāṇibhi;",
  "tha-ap412:44.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap412:44.4_0": "suṇātha mama bhāsato.",
  "tha-ap412:45.1_0": "Tiṁsakappasahassāni,",
  "tha-ap412:45.2_0": "devaloke ramissati;",
  "tha-ap412:45.3_0": "Sahassakkhattuṁ rājā ca,",
  "tha-ap412:45.4_0": "cakkavattī bhavissati’.",
  "tha-ap412:46.1_0": "Suladdhalābhaṁ laddhomhi,",
  "tha-ap412:46.2_0": "tosayitvāna subbataṁ;",
  "tha-ap412:46.3_0": "Sabbāsave pariññāya,",
  "tha-ap412:46.4_0": "viharāmi anāsavo.",
  "tha-ap412:47.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap412:47.2_0": "…pe…",
  "tha-ap412:47.3_0": "viharāmi anāsavo.",
  "tha-ap412:48.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap412:48.2_0": "…pe…",
  "tha-ap412:48.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap412:49.1_0": "Paṭisambhidā catasso,",
  "tha-ap412:49.2_0": "…pe…",
  "tha-ap412:49.3_0": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap412:50.1_0": "Itthaṁ sudaṁ āyasmā udeno thero imā gāthāyo abhāsitthāti.",
  "tha-ap412:51.1_0": "Udenattherassāpadānaṁ dasamaṁ.",
  "tha-ap412:52.1_0": "Metteyyavaggo ekacattālīsamo.",
  "tha-ap412:53.1_0": "Tassuddānaṁ",
  "tha-ap412:54.1_0": "Metteyyo puṇṇako thero,",
  "tha-ap412:54.2_0": "mettagū dhotakopi ca;",
  "tha-ap412:54.3_0": "Upasivo ca nando ca,",
  "tha-ap412:54.4_0": "hemako sattamo tahiṁ.",
  "tha-ap412:55.1_0": "Todeyyo jatukaṇṇī ca,",
  "tha-ap412:55.2_0": "udeno ca mahāyaso;",
  "tha-ap412:55.3_0": "Tīṇi gāthāsatānettha,",
  "tha-ap412:55.4_0": "asīti tīṇi cuttariṁ."
}