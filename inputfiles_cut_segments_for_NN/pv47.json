{
  "pv47:0.1_0": "Petavatthu",
  "pv47:0.2_0": "Mahāvagga",
  "pv47:0.3_0": "12. Ambavanapetavatthu",
  "pv47:1.1_0": "“Ayañca te pokkharaṇī surammā,",
  "pv47:1.2_0": "Samā sutitthā ca mahodakā ca;",
  "pv47:1.3_0": "Supupphitā bhamaragaṇānukiṇṇā,",
  "pv47:1.4_0": "Kathaṁ tayā laddhā ayaṁ manuññā.",
  "pv47:2.1_0": "Idañca te ambavanaṁ surammaṁ,",
  "pv47:2.2_0": "Sabbotukaṁ dhārayate phalāni;",
  "pv47:2.3_0": "Supupphitaṁ bhamaragaṇānukiṇṇaṁ,",
  "pv47:2.4_0": "Kathaṁ tayā laddhamidaṁ vimānaṁ”.",
  "pv47:3.1_0": "“Ambapakkaṁ dakaṁ yāgu,",
  "pv47:3.2_0": "sītacchāyā manoramā;",
  "pv47:3.3_0": "Dhītāya dinnadānena,",
  "pv47:3.4_0": "tena me idha labbhati”.",
  "pv47:4.1_0": "“Sandiṭṭhikaṁ kammaṁ evaṁ passatha,",
  "pv47:4.2_0": "Dānassa damassa saṁyamassa vipākaṁ;",
  "pv47:4.3_0": "Dāsī ahaṁ ayyakulesu hutvā,",
  "pv47:4.4_0": "Suṇisā homi agārassa issarā”ti.",
  "pv47:5.1_0": "Ambavanapetavatthu dvādasamaṁ."
}