{
  "tha-ap215:0.1_0": "Therāpadāna",
  "tha-ap215:0.2_0": "Hatthivagga",
  "tha-ap215:0.3_0": "3. Saccasaññakattheraapadāna",
  "tha-ap215:1.1_0": "“Vessabhū tamhi samaye,",
  "tha-ap215:1.2_0": "bhikkhusaṅghapurakkhato;",
  "tha-ap215:1.3_0": "Deseti ariyasaccāni,",
  "tha-ap215:1.4_0": "nibbāpento mahājanaṁ.",
  "tha-ap215:2.1_0": "Paramakāruññapattomhi,",
  "tha-ap215:2.2_0": "samitiṁ agamāsahaṁ;",
  "tha-ap215:2.3_0": "Sohaṁ nisinnako santo,",
  "tha-ap215:2.4_0": "dhammamassosi satthuno.",
  "tha-ap215:3.1_0": "Tassāhaṁ dhammaṁ sutvāna,",
  "tha-ap215:3.2_0": "devalokaṁ agacchahaṁ;",
  "tha-ap215:3.3_0": "Tiṁsakappāni devesu,",
  "tha-ap215:3.4_0": "avasiṁ tatthahaṁ pure.",
  "tha-ap215:4.1_0": "Ekattiṁse ito kappe,",
  "tha-ap215:4.2_0": "yaṁ saññamalabhiṁ tadā;",
  "tha-ap215:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap215:4.4_0": "saccasaññāyidaṁ phalaṁ.",
  "tha-ap215:5.1_0": "Chabbīsamhi ito kappe,",
  "tha-ap215:5.2_0": "eko āsiṁ janādhipo;",
  "tha-ap215:5.3_0": "Ekaphusitanāmena,",
  "tha-ap215:5.4_0": "cakkavattī mahabbalo.",
  "tha-ap215:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap215:6.2_0": "…pe…",
  "tha-ap215:6.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap215:7.1_0": "Itthaṁ sudaṁ āyasmā saccasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap215:8.1_0": "Saccasaññakattherassāpadānaṁ tatiyaṁ."
}