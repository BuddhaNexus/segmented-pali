{
  "tika-s0402t54:0_0": "(21) 1. Sappurisavaggo",
  "tika-s0402t54:1_0": "1-10. Sikkhāpadasuttādivaṇṇanā",
  "tika-s0402t54:2_0": "201-210.",
  "tika-s0402t54:2_1": "Pañcamassa paṭhame asappurisoti lāmakapuriso.",
  "tika-s0402t54:2_2": "Pāṇaṁ atipātetīti pāṇātipātī.",
  "tika-s0402t54:2_3": "Adinnaṁ ādiyatīti adinnādāyī.",
  "tika-s0402t54:2_4": "Kāmesu micchā caratīti kāmesumicchācārī.",
  "tika-s0402t54:2_5": "Musā vadatīti musāvādī.",
  "tika-s0402t54:2_6": "Surāmerayamajjapamāde tiṭṭhatīti surāmerayamajjapamādaṭṭhāyī.",
  "tika-s0402t54:2_7": "Pāṇātipāte samādapetīti yathā pāṇaṁ atipāteti,",
  "tika-s0402t54:2_8": "tathā naṁ tattha gahaṇaṁ gaṇhāpeti.",
  "tika-s0402t54:2_9": "Sesesupi eseva nayo.",
  "tika-s0402t54:2_10": "Ayaṁ vuccatīti ayaṁ evarūpo puggalo yasmā sayaṁkatena ca dussīlyena samannāgato,",
  "tika-s0402t54:2_11": "yañca samādapitena kataṁ,",
  "tika-s0402t54:2_12": "tato upaḍḍhassa dāyādo,",
  "tika-s0402t54:2_13": "tasmā ‘‘asappurisena asappurisataro’’ti vuccati.",
  "tika-s0402t54:2_14": "Sappurisoti uttamapuriso.",
  "tika-s0402t54:2_15": "Sappurisena sappurisataroti attanā ca katena susīlyena samannāgatattā yañca samādapito karoti,",
  "tika-s0402t54:2_16": "tato upaḍḍhassa dāyādattā uttamapurisena uttamapurisataro.",
  "tika-s0402t54:2_17": "Ettha ca parena kataṁ dussīlyaṁ susīlyaṁ vā āṇattiyā attanā ca vacippayogena katanti āṇāpanavasena pasutapāpassa",
  "tika-s0402t54:2_18": "puññassa vā dāyādo ‘‘tato upaḍḍhassa dāyādo’’ti vutto.",
  "tika-s0402t54:2_19": "Dutiyādīni uttānatthāneva.",
  "tika-s0402t54:3_0": "Sikkhāpadasuttādivaṇṇanā niṭṭhitā.",
  "tika-s0402t54:4_0": "Sappurisavaggavaṇṇanā niṭṭhitā.",
  "tika-s0402t54:5_0": "211-220. Dutiyo parisāvaggo uttānatthoyeva."
}