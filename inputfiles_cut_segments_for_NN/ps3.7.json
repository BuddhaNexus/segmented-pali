{
  "ps3.7:0.1_0": "Paṭisambhidāmagga",
  "ps3.7:0.2_0": "3 Paññāvagga",
  "ps3.7:0.3_0": "3.7. Samasīsakathā",
  "ps3.7:1.1_0": "Sabbadhammānaṁ sammāsamucchede nirodhe ca anupaṭṭhānatā paññā samasīsaṭṭhe ñāṇaṁ.",
  "ps3.7:2.1_0": "**Sabbadhammānan**ti pañcakkhandhā, dvādasāyatanāni, aṭṭhārasa dhātuyo, kusalā dhammā, akusalā dhammā, abyākatā dhammā, kāmāvacarā dhammā, rūpāvacarā dhammā, arūpāvacarā dhammā, apariyāpannā dhammā.",
  "ps3.7:2.2_0": "**Sammā samucchede**ti nekkhammena kāmacchandaṁ sammā samucchindati,",
  "ps3.7:2.2_1": "abyāpādena byāpādaṁ sammā samucchindati,",
  "ps3.7:2.2_2": "ālokasaññāya thinamiddhaṁ sammā samucchindati,",
  "ps3.7:2.2_3": "avikkhepena uddhaccaṁ sammā samucchindati,",
  "ps3.7:2.2_4": "dhammavavatthānena vicikicchaṁ sammā samucchindati,",
  "ps3.7:2.2_5": "ñāṇena avijjaṁ sammā samucchindati,",
  "ps3.7:2.2_6": "pāmojjena aratiṁ sammā samucchindati,",
  "ps3.7:2.2_7": "paṭhamena jhānena nīvaraṇe sammā samucchindati …pe…",
  "ps3.7:2.3_0": "arahattamaggena sabbakilese sammā samucchindati.",
  "ps3.7:3.1_0": "**Nirodhe**ti nekkhammena kāmacchandaṁ nirodheti,",
  "ps3.7:3.1_1": "abyāpādena byāpādaṁ nirodheti,",
  "ps3.7:3.1_2": "ālokasaññāya thinamiddhaṁ nirodheti,",
  "ps3.7:3.1_3": "avikkhepena uddhaccaṁ nirodheti,",
  "ps3.7:3.1_4": "dhammavavatthānena vicikicchaṁ nirodheti, ñāṇena avijjaṁ nirodheti, pāmojjena aratiṁ nirodheti,",
  "ps3.7:3.1_5": "paṭhamena jhānena nīvaraṇe nirodheti …pe…",
  "ps3.7:3.2_0": "arahattamaggena sabbakilese nirodheti.",
  "ps3.7:4.1_0": "**Anupaṭṭhānatā**ti nekkhammaṁ paṭiladdhassa kāmacchando na upaṭṭhāti,",
  "ps3.7:4.1_1": "abyāpādaṁ paṭiladdhassa byāpādo na upaṭṭhāti,",
  "ps3.7:4.1_2": "ālokasaññaṁ paṭiladdhassa thinamiddhaṁ na upaṭṭhāti,",
  "ps3.7:4.1_3": "avikkhepaṁ paṭiladdhassa uddhaccaṁ na upaṭṭhāti,",
  "ps3.7:4.1_4": "dhammavavatthānaṁ paṭiladdhassa vicikicchā na upaṭṭhāti,",
  "ps3.7:4.1_5": "ñāṇaṁ paṭiladdhassa avijjā na upaṭṭhāti,",
  "ps3.7:4.1_6": "pāmojjaṁ paṭiladdhassa arati na upaṭṭhāti,",
  "ps3.7:4.1_7": "paṭhamaṁ jhānaṁ paṭiladdhassa nīvaraṇā na upaṭṭhanti …pe…",
  "ps3.7:4.2_0": "arahattamaggaṁ paṭiladdhassa sabbakilesā na upaṭṭhanti.",
  "ps3.7:5.1_0": "**Saman**ti kāmacchandassa pahīnattā nekkhammaṁ samaṁ,",
  "ps3.7:5.1_1": "byāpādassa pahīnattā abyāpādo samaṁ,",
  "ps3.7:5.1_2": "thinamiddhassa pahīnattā ālokasaññā samaṁ,",
  "ps3.7:5.1_3": "uddhaccassa pahīnattā avikkhepo samaṁ,",
  "ps3.7:5.1_4": "vicikicchāya pahīnattā dhammavavatthānaṁ samaṁ,",
  "ps3.7:5.1_5": "avijjāya pahīnattā ñāṇaṁ samaṁ,",
  "ps3.7:5.1_6": "aratiyā pahīnattā pāmojjaṁ samaṁ,",
  "ps3.7:5.1_7": "nīvaraṇānaṁ pahīnattā paṭhamaṁ jhānaṁ samaṁ …pe…",
  "ps3.7:5.2_0": "sabbakilesānaṁ pahīnattā arahattamaggo samaṁ.",
  "ps3.7:6.1_0": "**Sīsan**ti terasa sīsāni—",
  "ps3.7:6.2_0": "palibodhasīsañca taṇhā, vinibandhanasīsañca māno, parāmāsasīsañca diṭṭhi, vikkhepasīsañca uddhaccaṁ, saṅkilesasīsañca avijjā, adhimokkhasīsañca saddhā, paggahasīsañca vīriyaṁ, upaṭṭhānasīsañca sati, avikkhepasīsañca samādhi, dassanasīsañca paññā,",
  "ps3.7:6.2_1": "pavattasīsañca jīvitindriyaṁ, gocarasīsañca vimokkho, saṅkhārasīsañca nirodhoti.",
  "ps3.7:6.3_0": "Samasīsakathā niṭṭhitā."
}