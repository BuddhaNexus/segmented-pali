{
  "tika-abh08t21:0_0": "22. Dvāvīsatimo paricchedo",
  "tika-abh08t21:1_0": "Ñāṇadassanavisuddhiniddesavaṇṇanā",
  "tika-abh08t21:2_0": "1319-22.",
  "tika-abh08t21:2_1": "Āvajjanassa hitaṁ āvajjaniyaṁ,",
  "tika-abh08t21:2_2": "taṁ ṭhānaṁ etassāti āvajjaniyaṭhānaṁ,",
  "tika-abh08t21:2_3": "gotrabhūti attho.",
  "tika-abh08t21:2_4": "Taṁ gotrabhucittaṁ maggacittassa āvajjaniyaṭhānattā.",
  "tika-abh08t21:2_5": "Paṭipadāñāṇadassanaṁ kudācanaṁ na ca bhajati,",
  "tika-abh08t21:2_6": "tatheva ñāṇadassanavisuddhiṁ kudācanaṁ na bhajateva.",
  "tika-abh08t21:2_7": "Ubhinnaṁ ñāṇānaṁ antarā ekaṁ abbohārikaṁ vohāre niyuttanti vohārikaṁ,",
  "tika-abh08t21:2_8": "na vohārikaṁ abbohārikaṁ.",
  "tika-abh08t21:2_9": "Vipassanāya sotasmiṁ vipassanāya sote patitattā vipassanā nāma voharitabbā.",
  "tika-abh08t21:2_10": "Tato nibbānato.",
  "tika-abh08t21:3_0": "1325.Sūraṁ tikkhaṁ vipassananti gotrabhucittaṁ sandhāyāha.",
  "tika-abh08t21:4_0": "1326-9.Visaṅkhāranti saṅkhārehi vigataṁ.",
  "tika-abh08t21:4_1": "Paṭhamāvajjanañcevāti paṭhamāvajjanaṁ viya.",
  "tika-abh08t21:4_2": "Paṭhamābhogatāpi cāti paṭhamamanasikārā viya.",
  "tika-abh08t21:4_3": "Maggassa anantarādīhi paccayehi.",
  "tika-abh08t21:4_4": "Tassāti maggassa.",
  "tika-abh08t21:4_5": "Sikhāpattāya tāya vipassanāya muddhamhi matthake.",
  "tika-abh08t21:4_6": "Anāvattanti anivattaṁ.",
  "tika-abh08t21:5_0": "1330-3.",
  "tika-abh08t21:5_1": "Ekena āvajjanena ekissāyeva vīthiyā.",
  "tika-abh08t21:5_2": "Anulomagotrabhucetasanti anulomagotrabhucittānaṁ nānārammaṇatā vuttā.",
  "tika-abh08t21:5_3": "Taṁ gotrabhucittaṁ anāvajjanampi maggassa āvajjanaṭṭhāne ṭhatvā.",
  "tika-abh08t21:5_4": "Saññaṁ datvā viyāti ‘‘ahaṁ nibbānaṁ ārammaṇaṁ karomi,",
  "tika-abh08t21:5_5": "tvampi tamevārammaṇaṁ karohi’’ iti saññaṁ datvā viyāti adhippāyo.",
  "tika-abh08t21:5_6": "Saññitanti saññaṁ.",
  "tika-abh08t21:5_7": "Kadācipi anibbiddhapubbaṁ maggo esa eso maggo pubbe anibbiddhapubbo.",
  "tika-abh08t21:6_0": "1336.Ujjhatīti chindati.",
  "tika-abh08t21:7_0": "1338. Anekesaṁ ānisaṁsānaṁ dāyakena ādimaggena saṁyuttaṁ. Paṭhamamaggañāṇaṁ.",
  "tika-abh08t21:8_0": "1341.Ekassāsevanaṁnatthi ekassa cittuppādassa āsevanapaccayo natthi,",
  "tika-abh08t21:8_1": "tasmā kāraṇā dve cittuppādā anulomakā.",
  "tika-abh08t21:8_2": "Tehīti cittuppādehi āsevanapaccayaṁ laddhā labhitvā tatiyaṁ cittaṁ gotrabhu hoti.",
  "tika-abh08t21:9_0": "1345-7.",
  "tika-abh08t21:9_1": "Maggapekkhanahetu yassa āvajjanamanaso,",
  "tika-abh08t21:9_2": "taṁ maggapekkhanahetukaṁ.",
  "tika-abh08t21:9_3": "Tasmiṁ niruddheti tasmiṁ āvajjanacitte niruddhe maggassa paccavekkhaṇasaññitāni satta javanāni paṭipāṭiyā jāyante.",
  "tika-abh08t21:9_4": "Paccavekkhaṇañāṇāni ekūnavīsati honti.",
  "tika-abh08t21:10_0": "1351.Tato tadā vipassanāvīthiṁ otarati. Dutiyamaggañāṇaṁ.",
  "tika-abh08t21:11_0": "1361.Mūlaghātanti mūlaghātanaṁ. Tatiyamaggañāṇaṁ.",
  "tika-abh08t21:12_0": "1363.Anāvattisabhāvatoti anivattato. Catutthamaggañāṇaṁ.",
  "tika-abh08t21:13_0": "Iti abhidhammāvatāraṭīkāya",
  "tika-abh08t21:14_0": "Ñāṇadassanavisuddhiniddesavaṇṇanā niṭṭhitā.",
  "tika-abh08t21:15_0": "Dvāvīsatimo paricchedo."
}