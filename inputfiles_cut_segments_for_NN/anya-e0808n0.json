{
  "anya-e0808n0:0_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0808n0:1_0": "Vuttodayaṁ",
  "anya-e0808n0:2_0": "1. Saññāparibhāsāniddesa-paṭhamapariccheda",
  "anya-e0808n0:3_0": "Ratanattayappaṇāma",
  "anya-e0808n0:4_0": "1.",
  "anya-e0808n0:5_0": " Nama’tthu jana santāna, tama santāna bhedino;",
  "anya-e0808n0:6_0": "Dhammu’jjalanta rucino, munindo’dāta rocino.",
  "anya-e0808n0:7_0": "Nimitta",
  "anya-e0808n0:8_0": "2.",
  "anya-e0808n0:9_0": " Piṅgalā’cariyādīhi, chandaṁ ya muditaṁ purā;",
  "anya-e0808n0:10_0": "Suddhamāgadhikānaṁ taṁ,",
  "anya-e0808n0:10_1": "na sādheti yathicchitaṁ ya’dicchitaṁ yati’cchitaṁ (ka.).",
  "anya-e0808n0:11_0": "Ganthaparimāṇa",
  "anya-e0808n0:12_0": "3.",
  "anya-e0808n0:13_0": " Tato māgadhabhāsāya, mattā,vaṇṇa,vibhedanaṁ;",
  "anya-e0808n0:14_0": "Lakkhya lakkhaṇa saṁyuttaṁ, pasanna’ttha,pada,kkamaṁ.",
  "anya-e0808n0:15_0": "Abhidhānādi",
  "anya-e0808n0:16_0": "4.",
  "anya-e0808n0:17_0": " Idaṁ vuttodayaṁ nāma, lokiya’cchandanissitaṁ;",
  "anya-e0808n0:18_0": "Ārabhissa’mahaṁ dāni, tesaṁ sukhavibuddhiyā.",
  "anya-e0808n0:19_0": "Gaṇasaṅketasaññā",
  "anya-e0808n0:20_0": "5.",
  "anya-e0808n0:21_0": " Sabbaglā mnā,’digalahū, bhyā’,majjha’nta garū jasā;",
  "anya-e0808n0:22_0": "Majjha’ntalā ra,te’te’ṭṭha, gaṇā go garu,lo lahu.",
  "anya-e0808n0:23_0": "Gaṇaniyama",
  "anya-e0808n0:24_0": "6.",
  "anya-e0808n0:25_0": " Bha,ja,sā sabbaga,lahū, pañci’me saṇṭhitā gaṇā;",
  "anya-e0808n0:26_0": "Ariyādimhi viññeyyā, gaṇo idha catu’kkalo.",
  "anya-e0808n0:27_0": "Garu,lahusarūpa",
  "anya-e0808n0:28_0": "7.",
  "anya-e0808n0:29_0": " Saṁyogā’di ca, dīgho ca, niggahītaparo ca, yo;",
  "anya-e0808n0:30_0": "Garu, vaṅko, pādanto,vā, rasso’ñño mattiko lu’ju.",
  "anya-e0808n0:31_0": "8.",
  "anya-e0808n0:32_0": " Pare pādādisaṁyoge, yo pubbo garuka’kkharo;",
  "anya-e0808n0:33_0": "Lahu sa kvaci viññeyyo, tadudāharaṇaṁ yathā.",
  "anya-e0808n0:34_0": "9.",
  "anya-e0808n0:35_0": "Dassanarasā’nubhāvane,",
  "anya-e0808n0:35_1": "nibaddhagedhā jinassa’yaṁ janatā;",
  "anya-e0808n0:36_0": "Vimhayajananī saññata, kriyā nu kaṁ nā’nurañjayati.",
  "anya-e0808n0:37_0": "10.",
  "anya-e0808n0:38_0": " Viññeyyā lokato saññā, samuddo,su,rasādinaṁ;",
  "anya-e0808n0:39_0": "Pādoñeyyo catutthaṁ’so, padacchedo yatī bhave.",
  "anya-e0808n0:40_0": "11.",
  "anya-e0808n0:41_0": "Sama,maḍḍhasamaṁ, vuttaṁ, visamaṁ cā’paraṁ tidhā;",
  "anya-e0808n0:42_0": "Samā lakkhaṇato pādā, cattāro yassa taṁ samaṁ.",
  "anya-e0808n0:43_0": "12.",
  "anya-e0808n0:44_0": " Yassa’ntimena dutiyo, tatiyenā’dimo samo;",
  "anya-e0808n0:45_0": "Ta’daḍḍhasama, maññaṁ tu, bhinna lakkhaṇa pādikaṁ.",
  "anya-e0808n0:46_0": "13.",
  "anya-e0808n0:47_0": " Pāda’mekakkharā’rabbha, yāva chabbīsata’kkharā;",
  "anya-e0808n0:48_0": "Bhave pādehi taṁ chandaṁ, nānānāmo’ditaṁ tato.",
  "anya-e0808n0:49_0": "14.",
  "anya-e0808n0:50_0": "Daṇḍakā caṇḍavuṭṭhyā’di, pādehi chahi, tīhi tu;",
  "anya-e0808n0:51_0": "‘Gāthā’ti ca paratthe’vaṁ, chando saññā pakāsitā.",
  "anya-e0808n0:52_0": "15.",
  "anya-e0808n0:53_0": " Anantaro’ditaṁ ca’ñña, metaṁ sāmañña nāmato;",
  "anya-e0808n0:54_0": "‘Gāthā’icceva niddiṭṭhaṁ, munindavacane pana.",
  "anya-e0808n0:55_0": "16.",
  "anya-e0808n0:56_0": " Visesanāmato kiñci, gahetvā sabbatho’citaṁ;",
  "anya-e0808n0:57_0": "Dassayissāma’haṁ te’ttha, nāmānā’vi bhavissare.",
  "anya-e0808n0:58_0": "Iti vuttodaye chandasi saññāparibhāsā niddeso nāma",
  "anya-e0808n0:59_0": "Paṭhamo paricchedo."
}