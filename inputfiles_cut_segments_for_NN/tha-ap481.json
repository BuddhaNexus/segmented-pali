{
  "tha-ap481:0.1_0": "Therāpadāna",
  "tha-ap481:0.2_0": "Naḷamālivagga",
  "tha-ap481:0.3_0": "9. Pānadhidāyakattheraapadāna",
  "tha-ap481:1.1_0": "“Anomadassī bhagavā,",
  "tha-ap481:1.2_0": "lokajeṭṭho narāsabho;",
  "tha-ap481:1.3_0": "Divāvihārā nikkhamma,",
  "tha-ap481:1.4_0": "pathamāruhi cakkhumā.",
  "tha-ap481:2.1_0": "Pānadhiṁ sukataṁ gayha,",
  "tha-ap481:2.2_0": "addhānaṁ paṭipajjahaṁ;",
  "tha-ap481:2.3_0": "Tatthaddasāsiṁ sambuddhaṁ,",
  "tha-ap481:2.4_0": "pattikaṁ cārudassanaṁ.",
  "tha-ap481:3.1_0": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap481:3.2_0": "nīharitvāna pānadhiṁ;",
  "tha-ap481:3.3_0": "Pādamūle ṭhapetvāna,",
  "tha-ap481:3.4_0": "idaṁ vacanamabraviṁ.",
  "tha-ap481:4.1_0": "‘Abhirūha mahāvīra,",
  "tha-ap481:4.2_0": "sugatinda vināyaka;",
  "tha-ap481:4.3_0": "Ito phalaṁ labhissāmi,",
  "tha-ap481:4.4_0": "so me attho samijjhatu’.",
  "tha-ap481:5.1_0": "Anomadassī bhagavā,",
  "tha-ap481:5.2_0": "lokajeṭṭho narāsabho;",
  "tha-ap481:5.3_0": "Pānadhiṁ abhirūhitvā,",
  "tha-ap481:5.4_0": "idaṁ vacanamabravi.",
  "tha-ap481:6.1_0": "‘Yo pānadhiṁ me adāsi,",
  "tha-ap481:6.2_0": "pasanno sehi pāṇibhi;",
  "tha-ap481:6.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap481:6.4_0": "suṇātha mama bhāsato’.",
  "tha-ap481:7.1_0": "Buddhassa giramaññāya,",
  "tha-ap481:7.2_0": "sabbe devā samāgatā;",
  "tha-ap481:7.3_0": "Udaggacittā sumanā,",
  "tha-ap481:7.4_0": "vedajātā katañjalī.",
  "tha-ap481:8.1_0": "‘Pānadhīnaṁ padānena,",
  "tha-ap481:8.2_0": "sukhitoyaṁ bhavissati;",
  "tha-ap481:8.3_0": "Pañcapaññāsakkhattuñca,",
  "tha-ap481:8.4_0": "devarajjaṁ karissati.",
  "tha-ap481:9.1_0": "Sahassakkhattuṁ rājā ca,",
  "tha-ap481:9.2_0": "cakkavattī bhavissati;",
  "tha-ap481:9.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap481:9.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap481:10.1_0": "Aparimeyye ito kappe,",
  "tha-ap481:10.2_0": "okkākakulasambhavo;",
  "tha-ap481:10.3_0": "Gotamo nāma gottena,",
  "tha-ap481:10.4_0": "satthā loke bhavissati.",
  "tha-ap481:11.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap481:11.2_0": "oraso dhammanimmito;",
  "tha-ap481:11.3_0": "Sabbāsave pariññāya,",
  "tha-ap481:11.4_0": "nibbāyissatināsavo.",
  "tha-ap481:12.1_0": "Devaloke manusse vā,",
  "tha-ap481:12.2_0": "nibbattissati puññavā;",
  "tha-ap481:12.3_0": "Devayānapaṭibhāgaṁ,",
  "tha-ap481:12.4_0": "yānaṁ paṭilabhissati’.",
  "tha-ap481:13.1_0": "Pāsādā sivikā vayhaṁ,",
  "tha-ap481:13.2_0": "hatthino samalaṅkatā;",
  "tha-ap481:13.3_0": "Rathā vājaññasaṁyuttā,",
  "tha-ap481:13.4_0": "sadā pātubhavanti me.",
  "tha-ap481:14.1_0": "Agārā nikkhamantopi,",
  "tha-ap481:14.2_0": "rathena nikkhamiṁ ahaṁ;",
  "tha-ap481:14.3_0": "Kesesu chijjamānesu,",
  "tha-ap481:14.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap481:15.1_0": "Lābhā mayhaṁ suladdhaṁ me,",
  "tha-ap481:15.2_0": "vāṇijjaṁ suppayojitaṁ;",
  "tha-ap481:15.3_0": "Datvāna pānadhiṁ ekaṁ,",
  "tha-ap481:15.4_0": "pattomhi acalaṁ padaṁ.",
  "tha-ap481:16.1_0": "Aparimeyye ito kappe,",
  "tha-ap481:16.2_0": "yaṁ pānadhimadāsahaṁ;",
  "tha-ap481:16.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap481:16.4_0": "pānadhissa idaṁ phalaṁ.",
  "tha-ap481:17.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap481:17.2_0": "…pe…",
  "tha-ap481:17.3_0": "viharāmi anāsavo.",
  "tha-ap481:18.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap481:18.2_0": "…pe…",
  "tha-ap481:18.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap481:19.1_0": "Paṭisambhidā catasso,",
  "tha-ap481:19.2_0": "…pe…",
  "tha-ap481:19.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap481:20.1_0": "Itthaṁ sudaṁ āyasmā pānadhidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap481:21.1_0": "Pānadhidāyakattherassāpadānaṁ navamaṁ."
}