{
  "snp3.6:0.1_0": "Sutta Nipāta 3.6",
  "snp3.6:0.2_0": "Sabhiyasutta",
  "snp3.6:1.1_0": "Evaṁ me sutaṁ—",
  "snp3.6:1.2_0": " ekaṁ samayaṁ bhagavā rājagahe viharati veḷuvane kalandakanivāpe.",
  "snp3.6:1.3_0": "Tena kho pana samayena sabhiyassa paribbājakassa purāṇasālohitāya devatāya pañhā uddiṭṭhā honti:",
  "snp3.6:1.4_0": "“yo te, sabhiya,",
  "snp3.6:1.4_1": "samaṇo vā brāhmaṇo vā ime pañhe puṭṭho byākaroti tassa santike brahmacariyaṁ careyyāsī”ti.",
  "snp3.6:2.1_0": "Atha kho sabhiyo paribbājako tassā devatāya santike te pañhe uggahetvā ye te samaṇabrāhmaṇā saṅghino",
  "snp3.6:2.1_1": "gaṇino gaṇācariyā ñātā yasassino titthakarā sādhusammatā bahujanassa,",
  "snp3.6:2.1_2": "seyyathidaṁ—",
  "snp3.6:2.2_0": "pūraṇo kassapo makkhaligosālo ajito kesakambalo pakudho kaccāno sañcayo belaṭṭhaputto nigaṇṭho nāṭaputto—",
  "snp3.6:2.3_0": "te upasaṅkamitvā te pañhe pucchati.",
  "snp3.6:2.4_0": "Te sabhiyena paribbājakena pañhe puṭṭhā na sampāyanti;",
  "snp3.6:2.5_0": "asampāyantā kopañca dosañca appaccayañca pātukaronti.",
  "snp3.6:2.6_0": "Api ca sabhiyaṁyeva paribbājakaṁ paṭipucchanti.",
  "snp3.6:3.1_0": "Atha kho sabhiyassa paribbājakassa etadahosi:",
  "snp3.6:3.2_0": "“ye kho te bhonto samaṇabrāhmaṇā saṅghino gaṇino gaṇācariyā ñātā yasassino titthakarā sādhusammatā bahujanassa,",
  "snp3.6:3.2_1": "seyyathidaṁ—",
  "snp3.6:3.3_0": "pūraṇo kassapo …pe… nigaṇṭho nāṭaputto—",
  "snp3.6:3.4_0": "te mayā pañhe puṭṭhā na sampāyanti, asampāyantā kopañca dosañca appaccayañca pātukaronti;",
  "snp3.6:3.5_0": "api ca maññevettha paṭipucchanti.",
  "snp3.6:3.6_0": "Yannūnāhaṁ hīnāyāvattitvā kāme paribhuñjeyyan”ti.",
  "snp3.6:4.1_0": "Atha kho sabhiyassa paribbājakassa etadahosi:",
  "snp3.6:4.2_0": "“ayampi kho samaṇo gotamo saṅghī ceva gaṇī ca gaṇācariyo ca ñāto yasassī titthakaro sādhusammato bahujanassa;",
  "snp3.6:4.3_0": "yannūnāhaṁ samaṇaṁ gotamaṁ upasaṅkamitvā ime pañhe puccheyyan”ti.",
  "snp3.6:5.1_0": "Atha kho sabhiyassa paribbājakassa etadahosi:",
  "snp3.6:5.2_0": "“yepi kho te bhonto samaṇabrāhmaṇā jiṇṇā vuḍḍhā mahallakā addhagatā vayoanuppattā therā rattaññū cirapabbajitā",
  "snp3.6:5.2_1": "saṅghino gaṇino gaṇācariyā ñātā yasassino titthakarā sādhusammatā bahujanassa,",
  "snp3.6:5.2_2": "seyyathidaṁ—",
  "snp3.6:5.3_0": "pūraṇo kassapo …pe… nigaṇṭho nāṭaputto—",
  "snp3.6:5.4_0": "tepi mayā pañhe puṭṭhā na sampāyanti,",
  "snp3.6:5.4_1": "asampāyantā kopañca dosañca appaccayañca pātukaronti,",
  "snp3.6:5.4_2": "api ca maññevettha paṭipucchanti;",
  "snp3.6:5.5_0": "kiṁ pana me samaṇo gotamo ime pañhe puṭṭho byākarissati.",
  "snp3.6:5.6_0": "Samaṇo hi gotamo daharo ceva jātiyā, navo ca pabbajjāyā”ti.",
  "snp3.6:6.1_0": "Atha kho sabhiyassa paribbājakassa etadahosi:",
  "snp3.6:6.2_0": "“samaṇo kho daharoti na uññātabbo na paribhotabbo.",
  "snp3.6:6.3_0": "Daharopi cesa samaṇo gotamo mahiddhiko hoti mahānubhāvo,",
  "snp3.6:6.3_1": "yannūnāhaṁ samaṇaṁ gotamaṁ upasaṅkamitvā ime pañhe puccheyyan”ti.",
  "snp3.6:7.1_0": "Atha kho sabhiyo paribbājako yena rājagahaṁ tena cārikaṁ pakkāmi.",
  "snp3.6:7.2_0": "Anupubbena cārikaṁ caramāno yena rājagahaṁ veḷuvanaṁ kalandakanivāpo,",
  "snp3.6:7.2_1": "yena bhagavā tenupasaṅkami;",
  "snp3.6:7.2_2": "upasaṅkamitvā bhagavatā saddhiṁ sammodi.",
  "snp3.6:7.3_0": "Sammodanīyaṁ kathaṁ sāraṇīyaṁ vītisāretvā ekamantaṁ nisīdi.",
  "snp3.6:7.4_0": "Ekamantaṁ nisinno kho sabhiyo paribbājako bhagavantaṁ gāthāya ajjhabhāsi—",
  "snp3.6:8.1_0": "“Kaṅkhī vecikicchī āgamaṁ,",
  "snp3.6:8.2_0": "(iti sabhiyo)",
  "snp3.6:8.3_0": "Pañhe pucchituṁ abhikaṅkhamāno;",
  "snp3.6:8.4_0": "Tesantakaro bhavāhi pañhe me puṭṭho,",
  "snp3.6:8.5_0": "Anupubbaṁ anudhammaṁ byākarohi me”.",
  "snp3.6:9.1_0": "“Dūrato āgatosi sabhiya,",
  "snp3.6:9.2_0": "(iti bhagavā)",
  "snp3.6:9.3_0": "Pañhe pucchituṁ abhikaṅkhamāno;",
  "snp3.6:9.4_0": "Tesantakaro bhavāmi pañhe te puṭṭho,",
  "snp3.6:9.5_0": "Anupubbaṁ anudhammaṁ byākaromi te.",
  "snp3.6:10.1_0": "Puccha maṁ sabhiya pañhaṁ,",
  "snp3.6:10.2_0": "Yaṁ kiñci manasicchasi;",
  "snp3.6:10.3_0": "Tassa tasseva pañhassa,",
  "snp3.6:10.4_0": "Ahaṁ antaṁ karomi te”ti.",
  "snp3.6:11.1_0": "Atha kho sabhiyassa paribbājakassa etadahosi:",
  "snp3.6:11.2_0": "“acchariyaṁ vata bho, abbhutaṁ vata bho.",
  "snp3.6:11.3_0": "Yaṁ vatāhaṁ aññesu samaṇabrāhmaṇesu okāsakammamattampi nālatthaṁ taṁ me idaṁ samaṇena gotamena okāsakammaṁ katan”ti.",
  "snp3.6:11.4_0": "Attamano pamudito udaggo pītisomanassajāto bhagavantaṁ pañhaṁ apucchi—",
  "snp3.6:12.1_0": "“Kiṁpattinamāhu bhikkhunaṁ,",
  "snp3.6:12.2_0": "(iti sabhiyo)",
  "snp3.6:12.3_0": "Sorataṁ kena kathañca dantamāhu;",
  "snp3.6:12.4_0": "Buddhoti kathaṁ pavuccati,",
  "snp3.6:12.5_0": "Puṭṭho me bhagavā byākarohi”.",
  "snp3.6:13.1_0": "“Pajjena katena attanā,",
  "snp3.6:13.2_0": "(sabhiyāti bhagavā)",
  "snp3.6:13.3_0": "Parinibbānagato vitiṇṇakaṅkho;",
  "snp3.6:13.4_0": "Vibhavañca bhavañca vippahāya,",
  "snp3.6:13.5_0": "Vusitavā khīṇapunabbhavo sa bhikkhu.",
  "snp3.6:14.1_0": "Sabbattha upekkhako satimā,",
  "snp3.6:14.2_0": "Na so hiṁsati kañci sabbaloke;",
  "snp3.6:14.3_0": "Tiṇṇo samaṇo anāvilo,",
  "snp3.6:14.4_0": "Ussadā yassa na santi sorato so.",
  "snp3.6:15.1_0": "Yassindriyāni bhāvitāni,",
  "snp3.6:15.2_0": "Ajjhattaṁ bahiddhā ca sabbaloke;",
  "snp3.6:15.3_0": "Nibbijjha imaṁ parañca lokaṁ,",
  "snp3.6:15.4_0": "Kālaṁ kaṅkhati bhāvito sa danto.",
  "snp3.6:16.1_0": "Kappāni viceyya kevalāni,",
  "snp3.6:16.2_0": "Saṁsāraṁ dubhayaṁ cutūpapātaṁ;",
  "snp3.6:16.3_0": "Vigatarajamanaṅgaṇaṁ visuddhaṁ,",
  "snp3.6:16.4_0": "Pattaṁ jātikhayaṁ tamāhu buddhan”ti.",
  "snp3.6:17.1_0": "Atha kho sabhiyo paribbājako bhagavato bhāsitaṁ abhinanditvā anumoditvā attamano pamudito udaggo pītisomanassajāto bhagavantaṁ uttariṁ pañhaṁ apucchi—",
  "snp3.6:18.1_0": "“Kiṁpattinamāhu brāhmaṇaṁ,",
  "snp3.6:18.2_0": "(iti sabhiyo)",
  "snp3.6:18.3_0": "Samaṇaṁ kena kathañca nhātakoti;",
  "snp3.6:18.4_0": "Nāgoti kathaṁ pavuccati,",
  "snp3.6:18.5_0": "Puṭṭho me bhagavā byākarohi”.",
  "snp3.6:19.1_0": "“Bāhitvā sabbapāpakāni,",
  "snp3.6:19.2_0": "(sabhiyāti bhagavā)",
  "snp3.6:19.3_0": "Vimalo sādhusamāhito ṭhitatto;",
  "snp3.6:19.4_0": "Saṁsāramaticca kevalī so,",
  "snp3.6:19.5_0": "Asito tādi pavuccate sa brahmā.",
  "snp3.6:20.1_0": "Samitāvi pahāya puññapāpaṁ,",
  "snp3.6:20.2_0": "Virajo ñatvā imaṁ parañca lokaṁ;",
  "snp3.6:20.3_0": "Jātimaraṇaṁ upātivatto,",
  "snp3.6:20.4_0": "Samaṇo tādi pavuccate tathattā.",
  "snp3.6:21.1_0": "Ninhāya sabbapāpakāni,",
  "snp3.6:21.2_0": "Ajjhattaṁ bahiddhā ca sabbaloke;",
  "snp3.6:21.3_0": "Devamanussesu kappiyesu,",
  "snp3.6:21.4_0": "Kappaṁ neti tamāhu nhātakoti.",
  "snp3.6:22.1_0": "Āguṁ na karoti kiñci loke,",
  "snp3.6:22.2_0": "Sabbasaṁyoge visajja bandhanāni;",
  "snp3.6:22.3_0": "Sabbattha na sajjatī vimutto,",
  "snp3.6:22.4_0": "Nāgo tādi pavuccate tathattā”ti.",
  "snp3.6:23.1_0": "Atha kho sabhiyo paribbājako …pe… bhagavantaṁ uttariṁ pañhaṁ apucchi—",
  "snp3.6:24.1_0": "“Kaṁ khettajinaṁ vadanti buddhā,",
  "snp3.6:24.2_0": "(iti sabhiyo)",
  "snp3.6:24.3_0": "Kusalaṁ kena kathañca paṇḍitoti;",
  "snp3.6:24.4_0": "Muni nāma kathaṁ pavuccati,",
  "snp3.6:24.5_0": "Puṭṭho me bhagavā byākarohi”.",
  "snp3.6:25.1_0": "“Khettāni viceyya kevalāni,",
  "snp3.6:25.2_0": "(sabhiyāti bhagavā)",
  "snp3.6:25.3_0": "Dibbaṁ mānusakañca brahmakhettaṁ;",
  "snp3.6:25.4_0": "Sabbakhettamūlabandhanā pamutto,",
  "snp3.6:25.5_0": "Khettajino tādi pavuccate tathattā.",
  "snp3.6:26.1_0": "Kosāni viceyya kevalāni,",
  "snp3.6:26.2_0": "Dibbaṁ mānusakañca brahmakosaṁ;",
  "snp3.6:26.3_0": "Sabbakosamūlabandhanā pamutto,",
  "snp3.6:26.4_0": "Kusalo tādi pavuccate tathattā.",
  "snp3.6:27.1_0": "Dubhayāni viceyya paṇḍarāni,",
  "snp3.6:27.2_0": "Ajjhattaṁ bahiddhā ca suddhipañño;",
  "snp3.6:27.3_0": "Kaṇhaṁ sukkaṁ upātivatto,",
  "snp3.6:27.4_0": "Paṇḍito tādi pavuccate tathattā.",
  "snp3.6:28.1_0": "Asatañca satañca ñatvā dhammaṁ,",
  "snp3.6:28.2_0": "Ajjhattaṁ bahiddhā ca sabbaloke;",
  "snp3.6:28.3_0": "Devamanussehi pūjanīyo,",
  "snp3.6:28.4_0": "Saṅgaṁ jālamaticca so munī”ti.",
  "snp3.6:29.1_0": "Atha kho sabhiyo paribbājako …pe… bhagavantaṁ uttariṁ pañhaṁ apucchi—",
  "snp3.6:30.1_0": "“Kiṁpattinamāhu vedaguṁ,",
  "snp3.6:30.2_0": "(iti sabhiyo)",
  "snp3.6:30.3_0": "Anuviditaṁ kena kathañca viriyavāti;",
  "snp3.6:30.4_0": "Ājāniyo kinti nāma hoti,",
  "snp3.6:30.5_0": "Puṭṭho me bhagavā byākarohi”.",
  "snp3.6:31.1_0": "“Vedāni viceyya kevalāni,",
  "snp3.6:31.2_0": "(sabhiyāti bhagavā)",
  "snp3.6:31.3_0": "Samaṇānaṁ yānidhatthi brāhmaṇānaṁ;",
  "snp3.6:31.4_0": "Sabbavedanāsu vītarāgo,",
  "snp3.6:31.5_0": "Sabbaṁ vedamaticca vedagū so.",
  "snp3.6:32.1_0": "Anuvicca papañcanāmarūpaṁ,",
  "snp3.6:32.2_0": "Ajjhattaṁ bahiddhā ca rogamūlaṁ;",
  "snp3.6:32.3_0": "Sabbarogamūlabandhanā pamutto,",
  "snp3.6:32.4_0": "Anuvidito tādi pavuccate tathattā.",
  "snp3.6:33.1_0": "Virato idha sabbapāpakehi,",
  "snp3.6:33.2_0": "Nirayadukkhaṁ aticca viriyavāso;",
  "snp3.6:33.3_0": "So vīriyavā padhānavā,",
  "snp3.6:33.4_0": "Dhīro tādi pavuccate tathattā.",
  "snp3.6:34.1_0": "Yassassu lunāni bandhanāni,",
  "snp3.6:34.2_0": "Ajjhattaṁ bahiddhā ca saṅgamūlaṁ;",
  "snp3.6:34.3_0": "Sabbasaṅgamūlabandhanā pamutto,",
  "snp3.6:34.4_0": "Ājāniyo tādi pavuccate tathattā”ti.",
  "snp3.6:35.1_0": "Atha kho sabhiyo paribbājako …pe… bhagavantaṁ uttariṁ pañhaṁ apucchi—",
  "snp3.6:36.1_0": "“Kiṁpattinamāhu sottiyaṁ,",
  "snp3.6:36.2_0": "(iti sabhiyo)",
  "snp3.6:36.3_0": "Ariyaṁ kena kathañca caraṇavāti;",
  "snp3.6:36.4_0": "Paribbājako kinti nāma hoti,",
  "snp3.6:36.5_0": "Puṭṭho me bhagavā byākarohi”.",
  "snp3.6:37.1_0": "“Sutvā sabbadhammaṁ abhiññāya loke,",
  "snp3.6:37.2_0": "(sabhiyāti bhagavā)",
  "snp3.6:37.3_0": "Sāvajjānavajjaṁ yadatthi kiñci;",
  "snp3.6:37.4_0": "Abhibhuṁ akathaṅkathiṁ vimuttaṁ,",
  "snp3.6:37.5_0": "Anighaṁ sabbadhimāhu sottiyoti.",
  "snp3.6:38.1_0": "Chetvā āsavāni ālayāni,",
  "snp3.6:38.2_0": "Vidvā so na upeti gabbhaseyyaṁ;",
  "snp3.6:38.3_0": "Saññaṁ tividhaṁ panujja paṅkaṁ,",
  "snp3.6:38.4_0": "Kappaṁ neti tamāhu ariyoti.",
  "snp3.6:39.1_0": "Yo idha caraṇesu pattipatto,",
  "snp3.6:39.2_0": "Kusalo sabbadā ājānāti dhammaṁ;",
  "snp3.6:39.3_0": "Sabbattha na sajjati vimuttacitto,",
  "snp3.6:39.4_0": "Paṭighā yassa na santi caraṇavā so.",
  "snp3.6:40.1_0": "Dukkhavepakkaṁ yadatthi kammaṁ,",
  "snp3.6:40.2_0": "Uddhamadho tiriyaṁ vāpi majjhe;",
  "snp3.6:40.3_0": "Paribbājayitvā pariññacārī,",
  "snp3.6:40.4_0": "Māyaṁ mānamathopi lobhakodhaṁ;",
  "snp3.6:40.5_0": "Pariyantamakāsi nāmarūpaṁ,",
  "snp3.6:40.6_0": "Taṁ paribbājakamāhu pattipattan”ti.",
  "snp3.6:41.1_0": "Atha kho sabhiyo paribbājako bhagavato bhāsitaṁ abhinanditvā anumoditvā attamano pamudito udaggo pītisomanassajāto",
  "snp3.6:41.1_1": "uṭṭhāyāsanā ekaṁsaṁ uttarāsaṅgaṁ karitvā yena bhagavā tenañjaliṁ paṇāmetvā bhagavantaṁ sammukhā sāruppāhi",
  "snp3.6:41.1_2": "gāthāhi abhitthavi:",
  "snp3.6:42.1_0": "“Yāni ca tīṇi yāni ca saṭṭhi,",
  "snp3.6:42.2_0": "Samaṇappavādasitāni bhūripañña;",
  "snp3.6:42.3_0": "Saññakkharasaññanissitāni,",
  "snp3.6:42.4_0": "Osaraṇāni vineyya oghatamagā.",
  "snp3.6:43.1_0": "Antagūsi pāragū dukkhassa,",
  "snp3.6:43.2_0": "Arahāsi sammāsambuddho khīṇāsavaṁ taṁ maññe;",
  "snp3.6:43.3_0": "Jutimā mutimā pahūtapañño,",
  "snp3.6:43.4_0": "Dukkhassantakara atāresi maṁ.",
  "snp3.6:44.1_0": "Yaṁ me kaṅkhitamaññāsi,",
  "snp3.6:44.2_0": "Vicikicchā maṁ tārayi namo te;",
  "snp3.6:44.3_0": "Muni monapathesu pattipatta,",
  "snp3.6:44.4_0": "Akhila ādiccabandhu soratosi.",
  "snp3.6:45.1_0": "Yā me kaṅkhā pure āsi,",
  "snp3.6:45.2_0": "Taṁ me byākāsi cakkhumā;",
  "snp3.6:45.3_0": "Addhā munīsi sambuddho,",
  "snp3.6:45.4_0": "Natthi nīvaraṇā tava.",
  "snp3.6:46.1_0": "Upāyāsā ca te sabbe,",
  "snp3.6:46.2_0": "Viddhastā vinaḷīkatā;",
  "snp3.6:46.3_0": "Sītibhūto damappatto,",
  "snp3.6:46.4_0": "Dhitimā saccanikkamo.",
  "snp3.6:47.1_0": "Tassa te nāganāgassa,",
  "snp3.6:47.2_0": "Mahāvīrassa bhāsato;",
  "snp3.6:47.3_0": "Sabbe devānumodanti,",
  "snp3.6:47.4_0": "Ubho nāradapabbatā.",
  "snp3.6:48.1_0": "Namo te purisājañña,",
  "snp3.6:48.2_0": "Namo te purisuttama;",
  "snp3.6:48.3_0": "Sadevakasmiṁ lokasmiṁ,",
  "snp3.6:48.4_0": "Natthi te paṭipuggalo.",
  "snp3.6:49.1_0": "Tuvaṁ buddho tuvaṁ satthā,",
  "snp3.6:49.2_0": "Tuvaṁ mārābhibhū muni;",
  "snp3.6:49.3_0": "Tuvaṁ anusaye chetvā,",
  "snp3.6:49.4_0": "Tiṇṇo tāresi maṁ pajaṁ.",
  "snp3.6:50.1_0": "Upadhī te samatikkantā,",
  "snp3.6:50.2_0": "Āsavā te padālitā;",
  "snp3.6:50.3_0": "Sīhosi anupādāno,",
  "snp3.6:50.4_0": "Pahīnabhayabheravo.",
  "snp3.6:51.1_0": "Puṇḍarīkaṁ yathā vaggu,",
  "snp3.6:51.2_0": "Toye na upalimpati;",
  "snp3.6:51.3_0": "Evaṁ puññe ca pāpe ca,",
  "snp3.6:51.4_0": "Ubhaye tvaṁ na limpasi;",
  "snp3.6:51.5_0": "Pāde vīra pasārehi,",
  "snp3.6:51.6_0": "Sabhiyo vandati satthuno”ti.",
  "snp3.6:52.1_0": "Atha kho sabhiyo paribbājako bhagavato pādesu sirasā nipatitvā bhagavantaṁ etadavoca:",
  "snp3.6:52.2_0": "“abhikkantaṁ, bhante …pe…",
  "snp3.6:52.3_0": "esāhaṁ bhagavantaṁ saraṇaṁ gacchāmi dhammañca bhikkhusaṅghañca;",
  "snp3.6:52.4_0": "labheyyāhaṁ, bhante, bhagavato santike pabbajjaṁ, labheyyaṁ upasampadan”ti.",
  "snp3.6:53.1_0": "“Yo kho, sabhiya,",
  "snp3.6:53.1_1": "aññatitthiyapubbo imasmiṁ dhammavinaye ākaṅkhati pabbajjaṁ,",
  "snp3.6:53.1_2": "ākaṅkhati upasampadaṁ,",
  "snp3.6:53.1_3": "so cattāro māse parivasati;",
  "snp3.6:53.2_0": "catunnaṁ māsānaṁ accayena āraddhacittā bhikkhū pabbājenti, upasampādenti bhikkhubhāvāya.",
  "snp3.6:53.3_0": "Api ca mettha puggalavemattatā viditā”ti.",
  "snp3.6:54.1_0": "“Sace, bhante,",
  "snp3.6:54.1_1": "aññatitthiyapubbā imasmiṁ dhammavinaye ākaṅkhantā pabbajjaṁ,",
  "snp3.6:54.1_2": "ākaṅkhantā upasampadaṁ cattāro māse parivasanti,",
  "snp3.6:54.1_3": "catunnaṁ māsānaṁ accayena āraddhacittā bhikkhū pabbājenti,",
  "snp3.6:54.1_4": "upasampādenti bhikkhubhāvāya,",
  "snp3.6:54.1_5": "ahaṁ cattāri vassāni parivasissāmi;",
  "snp3.6:54.2_0": "catunnaṁ vassānaṁ accayena āraddhacittā bhikkhū pabbājentu upasampādentu bhikkhubhāvāyā”ti.",
  "snp3.6:54.3_0": "Alattha kho sabhiyo paribbājako bhagavato santike pabbajjaṁ alattha upasampadaṁ …pe…",
  "snp3.6:54.4_0": "aññataro kho panāyasmā sabhiyo arahataṁ ahosīti.",
  "snp3.6:54.5_0": "Sabhiyasuttaṁ chaṭṭhaṁ."
}