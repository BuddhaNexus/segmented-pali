{
  "anya-e0703n50:0_0": "Ekapaññāsatima pariccheda",
  "anya-e0703n50:1_0": "Pañcarājako nāma",
  "anya-e0703n50:2_0": "1.",
  "anya-e0703n50:3_0": " Yuvarājā tadā hutvā, rājā dappuḷanāmako;",
  "anya-e0703n50:4_0": "Ṭhapesi oparajjamhi, ādipadaṁ sanāmakaṁ.",
  "anya-e0703n50:5_0": "2.",
  "anya-e0703n50:6_0": " Maricavaṭṭivihārassa, gāmaṁ datvā tato pure;",
  "anya-e0703n50:7_0": "Cārittaṁ pubbarājūnaṁ, rakkhitvāna mahiṁ imaṁ.",
  "anya-e0703n50:8_0": "3.",
  "anya-e0703n50:9_0": " Abhutvā dīghakālañhi, pubbakammena attano;",
  "anya-e0703n50:10_0": "Rājā so sattame māse, paviṭṭho paccuno mukhaṁ.",
  "anya-e0703n50:11_0": "4.",
  "anya-e0703n50:12_0": " Uparājā ahurājā, dappuḷo tadanantaraṁ;",
  "anya-e0703n50:13_0": "Udayassādipādassa, yuvarājapadaṁ adā.",
  "anya-e0703n50:14_0": "5.",
  "anya-e0703n50:15_0": " Tadā coḷabhayā paṇḍu-rājaṁ janapadaṁ sakaṁ;",
  "anya-e0703n50:16_0": "Cajitvā nāvamāruyha, mahātitthamupāgami.",
  "anya-e0703n50:17_0": "6.",
  "anya-e0703n50:18_0": " Āṇāpetvāna taṁ rājā, disvā santuṭṭhamānaso;",
  "anya-e0703n50:19_0": "Mahābhogaṁ adā tassa, nivāsesi purā bahi.",
  "anya-e0703n50:20_0": "7.",
  "anya-e0703n50:21_0": " Coḷarājena yujjhitvā, gahetvā paṭṭanadvayaṁ;",
  "anya-e0703n50:22_0": "Paṇḍurājassa dammīti, sannaddhe laṅkarājini.",
  "anya-e0703n50:23_0": "8.",
  "anya-e0703n50:24_0": " Kenā’pi karaṇīyena, khattiyā dīpavāsino;",
  "anya-e0703n50:25_0": "Akaṁsu viggahaṁ ghoraṁ, pāpakammena paṇḍuno.",
  "anya-e0703n50:26_0": "9.",
  "anya-e0703n50:27_0": " Paṇḍurāje’ttha vāsena, kammaṁ natthīti cintiya;",
  "anya-e0703n50:28_0": "Ṭhapetvā makuṭādīni, gato keraḷasantikaṁ.",
  "anya-e0703n50:29_0": "10.",
  "anya-e0703n50:30_0": " Viggahe niṭṭhite rājā, mahāmeghavane tadā;",
  "anya-e0703n50:31_0": "Mahābodhigharassā’dā, gāmaṁ nagarasantike.",
  "anya-e0703n50:32_0": "11.",
  "anya-e0703n50:33_0": " Āvāsaṁ rakkhako nāma, tassa senāpatī akā;",
  "anya-e0703n50:34_0": "Thūpārāmasamīpamhi, iḷaṅgo rājanāmakaṁ.",
  "anya-e0703n50:35_0": "12.",
  "anya-e0703n50:36_0": " Kataṁ taṁ pubbarājehi, rājā so paripāliya;",
  "anya-e0703n50:37_0": "Patto dvādasamaṁ vassaṁ, yathākammamupāgami.",
  "anya-e0703n50:38_0": "13.",
  "anya-e0703n50:39_0": " Udayo yuvarājā’si, laṁkāvāsīnamissaro;",
  "anya-e0703n50:40_0": "Senanāmādipādaṁ so, oparajje’bhisecayi.",
  "anya-e0703n50:41_0": "14.",
  "anya-e0703n50:42_0": " Rañño bhītā tadāmaccā, pavisiṁsu tapovanaṁ;",
  "anya-e0703n50:43_0": "Rājoparājā gantvāna, tesaṁ sīsāni chedayuṁ.",
  "anya-e0703n50:44_0": "15.",
  "anya-e0703n50:45_0": " Tena kammena nibbinnā, yatayo tannivāsino;",
  "anya-e0703n50:46_0": "Hitvā janapadaṁ rañño, tadāgacchiṁsu rohaṇaṁ.",
  "anya-e0703n50:47_0": "16.",
  "anya-e0703n50:48_0": " Tadā jānapadā ceva, nāgarā ca balāni ca;",
  "anya-e0703n50:49_0": "Kupitā caṇḍuvātena, sāgaro viya kampito.",
  "anya-e0703n50:50_0": "17.",
  "anya-e0703n50:51_0": " Ratanapāsādamāruyha, vihāre abhayuttare;",
  "anya-e0703n50:52_0": "Santāsetvāna rājānaṁ, dassetvāna vibhīsikaṁ.",
  "anya-e0703n50:53_0": "18.",
  "anya-e0703n50:54_0": " Upatthambhakamaccānaṁ, viggahassa tapovane;",
  "anya-e0703n50:55_0": "Tadā sīsāni chinditvā, kavātena nipātayuṁ.",
  "anya-e0703n50:56_0": "19.",
  "anya-e0703n50:57_0": " Taṁ sutvā yuvarājā ca, ādipādo ca taṁ sakhā;",
  "anya-e0703n50:58_0": "Ullaṅghitvāna pākāraṁ, sīghaṁ gacchiṁsu rohaṇaṁ.",
  "anya-e0703n50:59_0": "20.",
  "anya-e0703n50:60_0": " Balakāyonubandhitvā, yāva kaṇhanadītaṭā;",
  "anya-e0703n50:61_0": "Alābhena ca nāvānaṁ, tiṇṇattā tesamāgami.",
  "anya-e0703n50:62_0": "21.",
  "anya-e0703n50:63_0": " Rājaputtāgatā tattha, vane abhayabhedino;",
  "anya-e0703n50:64_0": "Yatīnaṁ purato tesaṁ, nipajjitvā urena te.",
  "anya-e0703n50:65_0": "22.",
  "anya-e0703n50:66_0": " Allavatthā’llakesā ca, paridevittha’nekadhā;",
  "anya-e0703n50:67_0": "Kandītvā rodanaṁ katvā, khamāpesuṁ tapassino.",
  "anya-e0703n50:68_0": "23.",
  "anya-e0703n50:69_0": " Khantimettānubhāvena, tesaṁ sāsanasāminaṁ;",
  "anya-e0703n50:70_0": "Puññodayo ahu tesaṁ, ubhinnaṁ dīpasāminaṁ.",
  "anya-e0703n50:71_0": "24.",
  "anya-e0703n50:72_0": " Yuvarājabalañceva, nikāyattayavāsino;",
  "anya-e0703n50:73_0": "Gamiṁsu tesamānetuṁ, santibhūte mahābale.",
  "anya-e0703n50:74_0": "25.",
  "anya-e0703n50:75_0": " Rājaputtā ubho byattā, paṇḍitā paṁsukūlino;",
  "anya-e0703n50:76_0": "Yācitvā tesamādāya, agamaṁsu sakaṁ puraṁ.",
  "anya-e0703n50:77_0": "26.",
  "anya-e0703n50:78_0": " Bhikkhūnaṁ purato maggaṁ, rājāgantā khamāpayi;",
  "anya-e0703n50:79_0": "Ādāya te vanaṁ tesaṁ, netvā rājagharaṁ gato.",
  "anya-e0703n50:80_0": "27.",
  "anya-e0703n50:81_0": " Tato paṭṭhāya cāritthaṁ, pāletvā pubbarājunaṁ;",
  "anya-e0703n50:82_0": "Rājā so tatiye vasse, yathākammamupāgami.",
  "anya-e0703n50:83_0": "28.",
  "anya-e0703n50:84_0": " Laṁkābhisekaṁ patvāna, seno so matimā tato;",
  "anya-e0703n50:85_0": "Udayaṁ ādipādaṁ taṁ, yuvarājaṁ akā sakhaṁ.",
  "anya-e0703n50:86_0": "29.",
  "anya-e0703n50:87_0": " Kahāpaṇasahassaṁ so, duggatānaṁ uposathe;",
  "anya-e0703n50:88_0": "Hotu’posathiko datvā, yāvajīvaṁ narādhipo.",
  "anya-e0703n50:89_0": "30.",
  "anya-e0703n50:90_0": " Paṭimā bhattavatthāni, bhikkhūnaṁ dharaṇī pati;",
  "anya-e0703n50:91_0": "Adā daṇḍissaraṁ dānaṁ, yācakānañca sippīnaṁ.",
  "anya-e0703n50:92_0": "31.",
  "anya-e0703n50:93_0": " Ṭhāne katthaci sippīnaṁ, pāsādesu manohare;",
  "anya-e0703n50:94_0": "Kāretvā bhogagāme ca, adāpesi mahāmati.",
  "anya-e0703n50:95_0": "32.",
  "anya-e0703n50:96_0": " Kahāpaṇasahassaṁ vā, datvā pañcasatāni vā;",
  "anya-e0703n50:97_0": "Laṅkāyaṁ jiṇṇakāvāse, navakammamakārayī.",
  "anya-e0703n50:98_0": "33.",
  "anya-e0703n50:99_0": " Cattālīsasahassāni, abhayuttaracetiye;",
  "anya-e0703n50:100_0": "Silāpattharaṇatthāya, dāpesi ca mahīpati.",
  "anya-e0703n50:101_0": "34.",
  "anya-e0703n50:102_0": " Mahāvāpīsu laṁkāyaṁ, jiṇṇaniddhamane akā;",
  "anya-e0703n50:103_0": "Navakammañca mariyādaṁ, thiyaṁ pāsāṇapaṁsunā.",
  "anya-e0703n50:104_0": "35.",
  "anya-e0703n50:105_0": " Akā rājaghare rammaṁ, mālāgehaṁ mahārahaṁ;",
  "anya-e0703n50:106_0": "Ṭhapitaṁ punarājūhi, dānaṁ sammāpavattayi.",
  "anya-e0703n50:107_0": "36.",
  "anya-e0703n50:108_0": " Kataṁ malayarājena, amaccena’gga bodhinā;",
  "anya-e0703n50:109_0": "Pariveṇaṁ nāgasālaṁ, disvā gāma madā tadā.",
  "anya-e0703n50:110_0": "37.",
  "anya-e0703n50:111_0": " Katvā catuvihāresu, rūpakammāni sādhukaṁ;",
  "anya-e0703n50:112_0": "Maṇḍapāni ca rammāni, dhātupūjaṁ akā sadā.",
  "anya-e0703n50:113_0": "38.",
  "anya-e0703n50:114_0": " Evamādīni puññāni, anekāni anekadhā;",
  "anya-e0703n50:115_0": "Katvā so navame vasse, yathākammamupāgami.",
  "anya-e0703n50:116_0": "39.",
  "anya-e0703n50:117_0": " Laṁkābhisekaṁ patvāna, yuvarājodayo tato;",
  "anya-e0703n50:118_0": "Senanāmādipādaṁ so, oparajje’bhi secayi.",
  "anya-e0703n50:119_0": "40.",
  "anya-e0703n50:120_0": " Niddālu majjapo āsi, rājā pāpena jantunaṁ;",
  "anya-e0703n50:121_0": "Coḷo pamattataṁ tassa, sutvā santuṭṭhamānaso.",
  "anya-e0703n50:122_0": "41.",
  "anya-e0703n50:123_0": " Paṇḍudesātisekaṁ so, pattukā mettha pesayi;",
  "anya-e0703n50:124_0": "Makuṭādīnamatthāya, ṭhapitānaṁva paṇḍunā.",
  "anya-e0703n50:125_0": "42.",
  "anya-e0703n50:126_0": " Tāni nādāsi so rājā, tena coḷo mahabbalo;",
  "anya-e0703n50:127_0": "Balaṁ sannayha pesesi, balakkārena gaṇhituṁ.",
  "anya-e0703n50:128_0": "43.",
  "anya-e0703n50:129_0": " Tadā senāpati ettha, paccante kupite gato;",
  "anya-e0703n50:130_0": "Āṇāpetvāna taṁ rājā, yujjhanatthāya pesayi.",
  "anya-e0703n50:131_0": "44.",
  "anya-e0703n50:132_0": " Hato senāpati tattha, yujjhi na raṇe mato;",
  "anya-e0703n50:133_0": "Kakūṭādīni ādāya, rājā so rohaṇaṁ agā.",
  "anya-e0703n50:134_0": "45.",
  "anya-e0703n50:135_0": " Gantvā coḷabalaṁ tattha, alabhitvā pavesanaṁ;",
  "anya-e0703n50:136_0": "Nivattitvā sakaṁ raṭṭhaṁ, agamāsi idhatā bhayā.",
  "anya-e0703n50:137_0": "46.",
  "anya-e0703n50:138_0": " Tato senāpatiṭṭhāne, viduraggaṁ tu nāyakaṁ;",
  "anya-e0703n50:139_0": "Ṭhapesi rājā laṁkindo, tejavantaṁ mahāmatiṁ.",
  "anya-e0703n50:140_0": "47.",
  "anya-e0703n50:141_0": " Paccantaṁ coḷarājassa, ghātetvā so camūpati;",
  "anya-e0703n50:142_0": "Āṇāpesi ito nītaṁ, dassetvāna vibhīsitaṁ.",
  "anya-e0703n50:143_0": "48.",
  "anya-e0703n50:144_0": " Tato dāpesi so sabba-parikkhāraṁ mahārahaṁ;",
  "anya-e0703n50:145_0": "Paṁsukūlikabhikkhūnaṁ, sabbesaṁ dīpavāsinaṁ.",
  "anya-e0703n50:146_0": "49.",
  "anya-e0703n50:147_0": " Mahāvihāre laṁkindo, paṭibimbassa satthuno;",
  "anya-e0703n50:148_0": "Jalantaṁ maṇiraṁsīhi, akā cūḷāmaṇiṁ tadā.",
  "anya-e0703n50:149_0": "50.",
  "anya-e0703n50:150_0": " Orodhā vidurā tassa, pādajālena pūjayi;",
  "anya-e0703n50:151_0": "Maṇīhi pajjalantehi, paṭimaṁ taṁ silāmayaṁ.",
  "anya-e0703n50:152_0": "51.",
  "anya-e0703n50:153_0": " Jhāpitaṁ coḷarājassa, balena maṇināmakaṁ;",
  "anya-e0703n50:154_0": "Pāsādaṁ kātumāraddho, cuto vassamhi aṭṭhame.",
  "anya-e0703n50:155_0": "52.",
  "anya-e0703n50:156_0": " Pañcete vasudhādhipā vasumahiṁ ekātapattaṅkitaṁ;",
  "anya-e0703n50:157_0": "Bhutvā niggahasaṅgahehi sakalaṁ lokaṁ vase vattiya;",
  "anya-e0703n50:158_0": "Yā tā maccuvasaṁ saputtavaṇitā sāmaccamittānugā;",
  "anya-e0703n50:159_0": "Iccevaṁ satataṁ sarantu sujanā hātuṁ pamādaṁ madaṁ.",
  "anya-e0703n50:160_0": "Sujanappasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n50:161_0": "Pañcarājako nāma",
  "anya-e0703n50:162_0": "Ekapaññāsatimo paricchedo."
}