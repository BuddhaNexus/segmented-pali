{
  "atk-s0401a16:0_0": "17. Pasādakaradhammavaggavaṇṇanā",
  "atk-s0401a16:1_0": "366.Addhamidantiādīsu addhanti ekaṁsādhivacanametaṁ,",
  "atk-s0401a16:1_1": "addhā idaṁ lābhānaṁ,",
  "atk-s0401a16:1_2": "ekaṁso esa lābhānanti vuttaṁ hoti.",
  "atk-s0401a16:1_3": "Yadidaṁ āraññikattanti yo esa āraññikabhāvo.",
  "atk-s0401a16:1_4": "Idaṁ vuttaṁ hoti –",
  "atk-s0401a16:1_5": "āraññikabhāvo nāma lābhānaṁ ekaṁso avassabhāvitā na sakkā āraññikena lābhaṁ na labhitunti.",
  "atk-s0401a16:1_6": "Āraññiko hi bhikkhu ‘‘attano araññavāsassa anucchavikaṁ karissāmī’’ti pāpakaṁ nāma na karoti,",
  "atk-s0401a16:1_7": "athassa ‘‘āraññiko ayaṁ bhikkhū’’ti sañjātagāravo mahājano catupaccayena pūjaṁ karoti.",
  "atk-s0401a16:1_8": "Tena vuttaṁ –",
  "atk-s0401a16:1_9": "‘‘addhamidaṁ,",
  "atk-s0401a16:1_10": "bhikkhave,",
  "atk-s0401a16:1_11": "lābhānaṁ yadidaṁ āraññikatta’’nti.",
  "atk-s0401a16:1_12": "Sesapadesupi eseva nayo.",
  "atk-s0401a16:1_13": "Ettha pana bāhusaccanti bahussutabhāvo.",
  "atk-s0401a16:1_14": "Thāvareyyanti cirapabbajitattā thāvarappattabhāvo.",
  "atk-s0401a16:1_15": "Ākappasampadāti cīvaraggahaṇādino ākappassa sampatti.",
  "atk-s0401a16:1_16": "Parivārasampadāti suciparivāratā.",
  "atk-s0401a16:1_17": "Kolaputtīti kulaputtabhāvo.",
  "atk-s0401a16:1_18": "Vaṇṇapokkharatāti sampannarūpatā.",
  "atk-s0401a16:1_19": "Kalyāṇavākkaraṇatāti vacanakiriyāya madhurabhāvo.",
  "atk-s0401a16:1_20": "Appābādhatāti ārogyasampatti.",
  "atk-s0401a16:1_21": "Arogo hi bhikkhu attano sarīrakalyāṇatāya vipassanādhure ca ganthadhure ca paripūrakārī hoti,",
  "atk-s0401a16:1_22": "tenassa lābho uppajjatīti.",
  "atk-s0401a16:2_0": "Soḷasa pasādakaradhammā niṭṭhitā."
}