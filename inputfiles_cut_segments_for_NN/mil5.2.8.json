{
  "mil5.2.8:0.1_0": "Milindapañha",
  "mil5.2.8:0.2_0": "Meṇḍakapañha",
  "mil5.2.8:0.3_0": "Abhejjavagga",
  "mil5.2.8:0.4_0": "8. Abhejjaparisapañha",
  "mil5.2.8:1.1_0": "“Bhante nāgasena, tumhe bhaṇatha—",
  "mil5.2.8:1.2_0": "‘tathāgato abhejjapariso’ti, puna ca bhaṇatha—",
  "mil5.2.8:1.3_0": "‘devadattena ekappahāraṁ pañca bhikkhusatāni bhinnānī’ti.",
  "mil5.2.8:1.4_0": "Yadi,",
  "mil5.2.8:1.4_1": "bhante nāgasena,",
  "mil5.2.8:1.4_2": "tathāgato abhejjapariso,",
  "mil5.2.8:1.4_3": "tena hi devadattena ekappahāraṁ pañca bhikkhusatāni bhinnānīti yaṁ vacanaṁ,",
  "mil5.2.8:1.4_4": "taṁ micchā.",
  "mil5.2.8:1.5_0": "Yadi devadattena ekappahāraṁ pañca bhikkhusatāni bhinnāni,",
  "mil5.2.8:1.5_1": "tena hi ‘tathāgato abhejjapariso’ti tampi vacanaṁ micchā.",
  "mil5.2.8:1.6_0": "Ayampi ubhato koṭiko pañho tavānuppatto,",
  "mil5.2.8:1.6_1": "gambhīro dunniveṭhiyo,",
  "mil5.2.8:1.6_2": "gaṇṭhitopi gaṇṭhitaro,",
  "mil5.2.8:1.6_3": "etthāyaṁ jano āvaṭo nivuto ovuto pihito pariyonaddho,",
  "mil5.2.8:1.6_4": "ettha tava ñāṇabalaṁ dassehi paravādesū”ti.",
  "mil5.2.8:2.1_0": "“Abhejjapariso, mahārāja,",
  "mil5.2.8:2.1_1": "tathāgato,",
  "mil5.2.8:2.1_2": "devadattena ca ekappahāraṁ pañca bhikkhusatāni bhinnāni,",
  "mil5.2.8:2.1_3": "tañca pana bhedakassa balena,",
  "mil5.2.8:2.1_4": "bhedake vijjamāne natthi, mahārāja,",
  "mil5.2.8:2.1_5": "abhejjaṁ nāma.",
  "mil5.2.8:2.2_0": "Bhedake sati mātāpi puttena bhijjati,",
  "mil5.2.8:2.2_1": "puttopi mātarā bhijjati,",
  "mil5.2.8:2.2_2": "pitāpi puttena bhijjati,",
  "mil5.2.8:2.2_3": "puttopi pitarā bhijjati,",
  "mil5.2.8:2.2_4": "bhātāpi bhaginiyā bhijjati,",
  "mil5.2.8:2.2_5": "bhaginīpi bhātarā bhijjati,",
  "mil5.2.8:2.2_6": "sahāyopi sahāyena bhijjati,",
  "mil5.2.8:2.2_7": "nāvāpi nānādārusaṅghaṭitā ūmivegasampahārena bhijjati,",
  "mil5.2.8:2.2_8": "rukkhopi madhukappasampannaphalo anilabalavegābhihato bhijjati,",
  "mil5.2.8:2.2_9": "suvaṇṇampi jātimantaṁ lohena bhijjati.",
  "mil5.2.8:2.3_0": "Api ca, mahārāja,",
  "mil5.2.8:2.3_1": "neso adhippāyo viññūnaṁ,",
  "mil5.2.8:2.3_2": "nesā buddhānaṁ adhimutti,",
  "mil5.2.8:2.3_3": "neso paṇḍitānaṁ chando ‘tathāgato bhejjapariso’ti.",
  "mil5.2.8:2.4_0": "Api cettha kāraṇaṁ atthi, yena kāraṇena tathāgato vuccati ‘abhejjapariso’ti.",
  "mil5.2.8:2.5_0": "Katamaṁ ettha kāraṇaṁ?",
  "mil5.2.8:2.6_0": "Tathāgatassa, mahārāja,",
  "mil5.2.8:2.6_1": "katena adānena vā appiyavacanena vā anatthacariyāya vā asamānattatāya vā yato kutoci cariyaṁ carantassapi parisā bhinnāti na sutapubbaṁ,",
  "mil5.2.8:2.6_2": "tena kāraṇena tathāgato vuccati ‘abhejjapariso’ti.",
  "mil5.2.8:2.7_0": "Tayāpetaṁ, mahārāja,",
  "mil5.2.8:2.7_1": "ñātabbaṁ ‘atthi kiñci navaṅge buddhavacane suttāgataṁ,",
  "mil5.2.8:2.7_2": "iminā nāma kāraṇena bodhisattassa katena tathāgatassa parisā bhinnā’”ti?",
  "mil5.2.8:2.8_0": "“Natthi, bhante, no cetaṁ loke dissati nopi suyyati.",
  "mil5.2.8:2.9_0": "Sādhu, bhante nāgasena, evametaṁ tathā sampaṭicchāmī”ti.",
  "mil5.2.8:3.1_0": "Abhejjaparisapañho aṭṭhamo.",
  "mil5.2.8:4.1_0": "Abhejjavaggo dutiyo.",
  "mil5.2.8:5.1_0": "Imasmiṁ vagge aṭṭha pañhā."
}