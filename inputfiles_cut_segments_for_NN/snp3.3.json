{
  "snp3.3:0.1_0": "Sutta Nipāta 3.3",
  "snp3.3:0.2_0": "Subhāsitasutta",
  "snp3.3:1.1_0": "Evaṁ me sutaṁ—",
  "snp3.3:1.2_0": " eka samayaṁ bhagavā sāvatthiyaṁ viharati jetavane anāthapiṇḍikassa ārāme.",
  "snp3.3:1.3_0": "Tatra kho bhagavā bhikkhū āmantesi:",
  "snp3.3:1.4_0": "“bhikkhavo”ti.",
  "snp3.3:1.5_0": "“Bhadante”ti te bhikkhū bhagavato paccassosuṁ.",
  "snp3.3:1.6_0": "Bhagavā etadavoca:",
  "snp3.3:2.1_0": "“Catūhi,",
  "snp3.3:2.1_1": "bhikkhave,",
  "snp3.3:2.1_2": "aṅgehi samannāgatā vācā subhāsitā hoti,",
  "snp3.3:2.1_3": "na dubbhāsitā,",
  "snp3.3:2.1_4": "anavajjā ca ananuvajjā ca viññūnaṁ.",
  "snp3.3:2.2_0": "Katamehi catūhi?",
  "snp3.3:2.3_0": "Idha,",
  "snp3.3:2.3_1": "bhikkhave,",
  "snp3.3:2.3_2": "bhikkhu subhāsitaṁyeva bhāsati no dubbhāsitaṁ,",
  "snp3.3:2.3_3": "dhammaṁyeva bhāsati no adhammaṁ,",
  "snp3.3:2.3_4": "piyaṁyeva bhāsati no appiyaṁ,",
  "snp3.3:2.3_5": "saccaṁyeva bhāsati no alikaṁ.",
  "snp3.3:2.4_0": "Imehi kho,",
  "snp3.3:2.4_1": "bhikkhave,",
  "snp3.3:2.4_2": "catūhi aṅgehi samannāgatā vācā subhāsitā hoti,",
  "snp3.3:2.4_3": "no dubbhāsitā,",
  "snp3.3:2.4_4": "anavajjā ca ananuvajjā ca viññūnan”ti.",
  "snp3.3:2.5_0": "Idamavoca bhagavā.",
  "snp3.3:2.6_0": "Idaṁ vatvāna sugato, athāparaṁ etadavoca satthā:",
  "snp3.3:3.1_0": "“Subhāsitaṁ uttamamāhu santo,",
  "snp3.3:3.2_0": "Dhammaṁ bhaṇe nādhammaṁ taṁ dutiyaṁ;",
  "snp3.3:3.3_0": "Piyaṁ bhaṇe nāppiyaṁ taṁ tatiyaṁ,",
  "snp3.3:3.4_0": "Saccaṁ bhaṇe nālikaṁ taṁ catutthan”ti.",
  "snp3.3:4.1_0": "Atha kho āyasmā vaṅgīso uṭṭhāyāsanā ekaṁsaṁ cīvaraṁ katvā yena bhagavā tenañjaliṁ paṇāmetvā bhagavantaṁ etadavoca:",
  "snp3.3:4.2_0": "“paṭibhāti maṁ, bhagavā, paṭibhāti maṁ, sugatā”ti.",
  "snp3.3:4.3_0": "“Paṭibhātu taṁ, vaṅgīsā”ti bhagavā avoca.",
  "snp3.3:4.4_0": "Atha kho āyasmā vaṅgīso bhagavantaṁ sammukhā sāruppāhi gāthāhi abhitthavi:",
  "snp3.3:5.1_0": "“Tameva vācaṁ bhāseyya,",
  "snp3.3:5.2_0": "yāyattānaṁ na tāpaye;",
  "snp3.3:5.3_0": "Pare ca na vihiṁseyya,",
  "snp3.3:5.4_0": "sā ve vācā subhāsitā.",
  "snp3.3:6.1_0": "Piyavācameva bhāseyya,",
  "snp3.3:6.2_0": "yā vācā paṭinanditā;",
  "snp3.3:6.3_0": "Yaṁ anādāya pāpāni,",
  "snp3.3:6.4_0": "paresaṁ bhāsate piyaṁ.",
  "snp3.3:7.1_0": "Saccaṁ ve amatā vācā,",
  "snp3.3:7.2_0": "esa dhammo sanantano;",
  "snp3.3:7.3_0": "Sacce atthe ca dhamme ca,",
  "snp3.3:7.4_0": "āhu santo patiṭṭhitā.",
  "snp3.3:8.1_0": "Yaṁ buddho bhāsati vācaṁ,",
  "snp3.3:8.2_0": "Khemaṁ nibbānapattiyā;",
  "snp3.3:8.3_0": "Dukkhassantakiriyāya,",
  "snp3.3:8.4_0": "Sā ve vācānamuttamā”ti.",
  "snp3.3:8.5_0": "Subhāsitasuttaṁ tatiyaṁ."
}