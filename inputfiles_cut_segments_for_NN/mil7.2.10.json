{
  "mil7.2.10:0.1_0": "Milindapañha",
  "mil7.2.10:0.2_0": "Opammakathāpañha",
  "mil7.2.10:0.3_0": "Gadrabhavagga",
  "mil7.2.10:0.4_0": "10. Makkaṭaṅgapañha",
  "mil7.2.10:1.1_0": "“Bhante nāgasena,",
  "mil7.2.10:1.1_1": "‘makkaṭassa dve aṅgāni gahetabbānī’ti yaṁ vadesi,",
  "mil7.2.10:1.1_2": "katamāni tāni dve aṅgāni gahetabbānī”ti?",
  "mil7.2.10:1.2_0": "“Yathā, mahārāja,",
  "mil7.2.10:1.2_1": "makkaṭo vāsamupagacchanto tathārūpe okāse mahatimahārukkhe pavivitte sabbaṭṭhakasākhe bhīruttāṇe vāsamupagacchati;",
  "mil7.2.10:1.3_0": "evameva kho, mahārāja,",
  "mil7.2.10:1.3_1": "yoginā yogāvacarena lajjiṁ pesalaṁ sīlavantaṁ kalyāṇadhammaṁ bahussutaṁ dhammadharaṁ vinayadharaṁ piyaṁ",
  "mil7.2.10:1.3_2": "garubhāvanīyaṁ vattāraṁ vacanakkhamaṁ ovādakaṁ viññāpakaṁ sandassakaṁ samādapakaṁ samuttejakaṁ sampahaṁsakaṁ",
  "mil7.2.10:1.3_3": "evarūpaṁ kalyāṇamittaṁ ācariyaṁ nissāya viharitabbaṁ.",
  "mil7.2.10:1.4_0": "Idaṁ, mahārāja, makkaṭassa paṭhamaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.2.10:2.1_0": "Puna caparaṁ, mahārāja,",
  "mil7.2.10:2.1_1": "makkaṭo rukkheyeva carati tiṭṭhati nisīdati,",
  "mil7.2.10:2.1_2": "yadi niddaṁ okkamati,",
  "mil7.2.10:2.1_3": "tattheva rattiṁ vāsamanubhavati;",
  "mil7.2.10:2.2_0": "evameva kho, mahārāja,",
  "mil7.2.10:2.2_1": "yoginā yogāvacarena pavanābhimukhena bhavitabbaṁ,",
  "mil7.2.10:2.2_2": "pavaneyeva ṭhānacaṅkamanisajjāsayanaṁ niddaṁ okkamitabbaṁ,",
  "mil7.2.10:2.2_3": "tattheva satipaṭṭhānamanubhavitabbaṁ.",
  "mil7.2.10:2.3_0": "Idaṁ, mahārāja, makkaṭassa dutiyaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.2.10:2.4_0": "Bhāsitampetaṁ, mahārāja, therena sāriputtena dhammasenāpatinā—",
  "mil7.2.10:3.1_0": "‘Caṅkamantopi tiṭṭhanto,",
  "mil7.2.10:3.2_0": "nisajjāsayanena vā;",
  "mil7.2.10:3.3_0": "Pavane sobhate bhikkhu,",
  "mil7.2.10:3.4_0": "pavanantaṁva vaṇṇitan’”ti.",
  "mil7.2.10:4.1_0": "Makkaṭaṅgapañho dasamo.",
  "mil7.2.10:5.1_0": "Gadrabhavaggo paṭhamo.",
  "mil7.2.10:6.1_0": "Tassuddānaṁ",
  "mil7.2.10:7.1_0": "Gadrabho ceva kukkuṭo,",
  "mil7.2.10:7.2_0": "kalando dīpini dīpiko;",
  "mil7.2.10:7.3_0": "Kummo vaṁso ca cāpo ca,",
  "mil7.2.10:7.4_0": "vāyaso atha makkaṭoti."
}