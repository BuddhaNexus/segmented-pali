{
  "atk-s0404a25:0_0": "(11) 1. Samaṇasaññāvaggo",
  "atk-s0404a25:1_0": "1. Samaṇasaññāsuttavaṇṇanā",
  "atk-s0404a25:2_0": "101.",
  "atk-s0404a25:2_1": "Tatiyassa paṭhame samaṇasaññāti samaṇānaṁ uppajjanakasaññā.",
  "atk-s0404a25:2_2": "Santatakārīti nirantarakārī.",
  "atk-s0404a25:2_3": "Abyāpajjhoti niddukkho.",
  "atk-s0404a25:2_4": "Idamatthaṁtissa hotīti idamatthaṁ ime paccayāti evamassa jīvitaparikkhāresu hoti,",
  "atk-s0404a25:2_5": "paccavekkhitaparibhogaṁ paribhuñjatīti attho.",
  "atk-s0404a25:2_6": "Dutiyaṁ uttānatthameva.",
  "atk-s0404a25:3_0": "3. Micchattasuttavaṇṇanā",
  "atk-s0404a25:4_0": "103.",
  "atk-s0404a25:4_1": "Tatiye virādhanā hotīti saggato maggato ca virajjhanaṁ hoti.",
  "atk-s0404a25:4_2": "No ārādhanāti na sampādanā na paripūrakāritā hoti.",
  "atk-s0404a25:4_3": "Pahotīti pavattati.",
  "atk-s0404a25:5_0": "4-5. Bījasuttādivaṇṇanā",
  "atk-s0404a25:6_0": "104-105.",
  "atk-s0404a25:6_1": "Catutthe yathādiṭṭhi samattaṁ samādinnanti diṭṭhānurūpena paripuṇṇaṁ samādinnaṁ sakalaṁ gahitaṁ.",
  "atk-s0404a25:6_2": "Cetanāti tīsu dvāresu nibbattitacetanāva gahitā.",
  "atk-s0404a25:6_3": "Patthanāti “evarūpo siya”nti evaṁ patthanā.",
  "atk-s0404a25:6_4": "Paṇidhīti “devo vā bhavissāmi devaññataro vā”ti cittaṭṭhapanā.",
  "atk-s0404a25:6_5": "Saṅkhārāti sampayuttakasaṅkhārā.",
  "atk-s0404a25:6_6": "Pañcame purecārikaṭṭhena pubbaṅgamā.",
  "atk-s0404a25:6_7": "Anvadevāti taṁ anubandhamānameva.",
  "atk-s0404a25:7_0": "6. Nijjarasuttavaṇṇanā",
  "atk-s0404a25:8_0": "106.",
  "atk-s0404a25:8_1": "Chaṭṭhe nijjaravatthūnīti nijjarakāraṇāni.",
  "atk-s0404a25:8_2": "Micchādiṭṭhi nijjiṇṇā hotīti ayaṁ heṭṭhā vipassanāyapi nijjiṇṇā eva pahīnā.",
  "atk-s0404a25:8_3": "Kasmā puna gahitāti?",
  "atk-s0404a25:8_4": "Asamucchinnattā.",
  "atk-s0404a25:8_5": "Vipassanāya hi kiñcāpi nijjiṇṇā,",
  "atk-s0404a25:8_6": "na pana samucchinnā.",
  "atk-s0404a25:8_7": "Maggo pana uppajjitvā taṁ samucchindati,",
  "atk-s0404a25:8_8": "na puna vuṭṭhātuṁ deti.",
  "atk-s0404a25:8_9": "Tasmā puna gahitā.",
  "atk-s0404a25:8_10": "Evaṁ sabbapadesu yojetabbo.",
  "atk-s0404a25:8_11": "Ettha ca sammāvimuttipaccayā catusaṭṭhi dhammā bhāvanāpāripūriṁ gacchanti.",
  "atk-s0404a25:8_12": "Katame catusaṭṭhi?",
  "atk-s0404a25:8_13": "Sotāpattimaggakkhaṇe adhimokkhaṭṭhena saddhindriyaṁ paripūrati,",
  "atk-s0404a25:8_14": "paggahaṭṭhena vīriyindriyaṁ,",
  "atk-s0404a25:8_15": "upaṭṭhānaṭṭhena satindriyaṁ,",
  "atk-s0404a25:8_16": "avikkhepaṭṭhena samādhindriyaṁ,",
  "atk-s0404a25:8_17": "dassanaṭṭhena paññindriyaṁ paripūreti,",
  "atk-s0404a25:8_18": "vijānanaṭṭhena manindriyaṁ,",
  "atk-s0404a25:8_19": "abhinandanaṭṭhena somanassindriyaṁ,",
  "atk-s0404a25:8_20": "pavattasantatiādhipateyyaṭṭhena jīvitindriyaṁ paripūrati…pe…",
  "atk-s0404a25:8_21": "arahattaphalakkhaṇe adhimokkhaṭṭhena saddhindriyaṁ…pe…",
  "atk-s0404a25:8_22": "pavattasantatiādhipateyyaṭṭhena jīvitindriyaṁ paripūratīti evaṁ catūsu ca maggesu catūsu ca phalesu aṭṭhaṭṭha",
  "atk-s0404a25:8_23": "hutvā catusaṭṭhi dhammā pāripūriṁ gacchanti.",
  "atk-s0404a25:9_0": "7. Dhovanāsuttavaṇṇanā",
  "atk-s0404a25:10_0": "107.",
  "atk-s0404a25:10_1": "Sattame dhovananti aṭṭhidhovanaṁ.",
  "atk-s0404a25:10_2": "Tasmiñhi janapade manussā ñātake mate na jhāpenti,",
  "atk-s0404a25:10_3": "āvāṭaṁ pana khaṇitvā bhūmiyaṁ nidahanti.",
  "atk-s0404a25:10_4": "Atha nesaṁ pūtibhūtānaṁ aṭṭhīni nīharitvā dhovitvā paṭipāṭiyā ussāpetvā gandhamālehi pūjetvā ṭhapenti.",
  "atk-s0404a25:10_5": "Nakkhatte patte tāni aṭṭhīni gahetvā rodanti paridevanti,",
  "atk-s0404a25:10_6": "tato nakkhattaṁ kīḷanti.",
  "atk-s0404a25:11_0": "8-10. Tikicchakasuttādivaṇṇanā",
  "atk-s0404a25:12_0": "108-110.",
  "atk-s0404a25:12_1": "Aṭṭhame virecananti dosanīharaṇabhesajjaṁ.",
  "atk-s0404a25:12_2": "Virittā hotīti nīhaṭā hoti panuditā.",
  "atk-s0404a25:12_3": "Navame vamananti vamanakaraṇabhesajjaṁ.",
  "atk-s0404a25:12_4": "Dasame niddhamanīyāti niddhamitabbā.",
  "atk-s0404a25:12_5": "Niddhantāti niddhamitā.",
  "atk-s0404a25:13_0": "11. Paṭhamaasekhasuttavaṇṇanā",
  "atk-s0404a25:14_0": "111.",
  "atk-s0404a25:14_1": "Ekādasame aṅgaparipūraṇatthaṁ sammādiṭṭhiyeva sammāñāṇanti vuttā.",
  "atk-s0404a25:14_2": "Evamete sabbepi arahattaphaladhammā asekhā,",
  "atk-s0404a25:14_3": "asekhassa pavattattā paccavekkhaṇañāṇampi asekhanti vuttaṁ.",
  "atk-s0404a25:15_0": "12. Dutiyaasekhasuttavaṇṇanā",
  "atk-s0404a25:16_0": "112. Dvādasame asekhiyāti asekhāyeva, asekhasantakā vā. Iminā suttena khīṇāsavova kathitoti.",
  "atk-s0404a25:17_0": "Samaṇasaññāvaggo paṭhamo."
}