{
  "cp6:0.1_0": "Cariyāpiṭaka",
  "cp6:0.2_0": "Akittivagga",
  "cp6:0.3_0": "Dānapāramī 6",
  "cp6:0.4_0": "Nimirājacariya",
  "cp6:1.1_0": "“Punāparaṁ yadā homi,",
  "cp6:1.2_0": "mithilāyaṁ puruttame;",
  "cp6:1.3_0": "Nimi nāma mahārājā,",
  "cp6:1.4_0": "paṇḍito kusalatthiko.",
  "cp6:2.1_0": "Tadāhaṁ māpayitvāna,",
  "cp6:2.2_0": "catussālaṁ catummukhaṁ;",
  "cp6:2.3_0": "Tattha dānaṁ pavattesiṁ,",
  "cp6:2.4_0": "migapakkhinarādinaṁ.",
  "cp6:3.1_0": "Acchādanañca sayanaṁ,",
  "cp6:3.2_0": "annaṁ pānañca bhojanaṁ;",
  "cp6:3.3_0": "Abbocchinnaṁ karitvāna,",
  "cp6:3.4_0": "mahādānaṁ pavattayiṁ.",
  "cp6:4.1_0": "Yathāpi sevako sāmiṁ,",
  "cp6:4.2_0": "dhanahetumupāgato;",
  "cp6:4.3_0": "Kāyena vācā manasā,",
  "cp6:4.4_0": "ārādhanīyamesati.",
  "cp6:5.1_0": "Tathevāhaṁ sabbabhave,",
  "cp6:5.2_0": "pariyesissāmi bodhijaṁ;",
  "cp6:5.3_0": "Dānena satte tappetvā,",
  "cp6:5.4_0": "icchāmi bodhimuttaman”ti.",
  "cp6:6.1_0": "Nimirājacariyaṁ chaṭṭhaṁ."
}