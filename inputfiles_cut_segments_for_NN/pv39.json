{
  "pv39:0.1_0": "Petavatthu",
  "pv39:0.2_0": "Mahāvagga",
  "pv39:0.3_0": "4. Revatīpetavatthu",
  "pv39:1.1_0": "“Uṭṭhehi revate supāpadhamme,",
  "pv39:1.2_0": "Apārutadvāre adānasīle;",
  "pv39:1.3_0": "Nessāma taṁ yattha thunanti duggatā,",
  "pv39:1.4_0": "Samappitā nerayikā dukhenā”ti.",
  "pv39:2.1_0": "Icceva vatvāna yamassa dūtā,",
  "pv39:2.2_0": "Te dve yakkhā lohitakkhā brahantā;",
  "pv39:2.3_0": "Paccekabāhāsu gahetvā revataṁ,",
  "pv39:2.4_0": "Pakkāmayuṁ devagaṇassa santike.",
  "pv39:3.1_0": "“Ādiccavaṇṇaṁ ruciraṁ pabhassaraṁ,",
  "pv39:3.2_0": "Byamhaṁ subhaṁ kañcanajālachannaṁ;",
  "pv39:3.3_0": "Kassetamākiṇṇajanaṁ vimānaṁ,",
  "pv39:3.4_0": "Suriyassa raṁsīriva jotamānaṁ.",
  "pv39:4.1_0": "Nārīgaṇā candanasāralittā,",
  "pv39:4.2_0": "Ubhato vimānaṁ upasobhayanti;",
  "pv39:4.3_0": "Taṁ dissati suriyasamānavaṇṇaṁ,",
  "pv39:4.4_0": "Ko modati saggapatto vimāne”ti.",
  "pv39:5.1_0": "“Bārāṇasiyaṁ nandiyo nāmāsi,",
  "pv39:5.2_0": "Upāsako amaccharī dānapati vadaññū;",
  "pv39:5.3_0": "Tassetamākiṇṇajanaṁ vimānaṁ,",
  "pv39:5.4_0": "Suriyassa raṁsīriva jotamānaṁ.",
  "pv39:6.1_0": "Nārīgaṇā candanasāralittā,",
  "pv39:6.2_0": "Ubhato vimānaṁ upasobhayanti;",
  "pv39:6.3_0": "Taṁ dissati suriyasamānavaṇṇaṁ,",
  "pv39:6.4_0": "So modati saggapatto vimāne”ti.",
  "pv39:7.1_0": "“Nandiyassāhaṁ bhariyā,",
  "pv39:7.2_0": "Agārinī sabbakulassa issarā;",
  "pv39:7.3_0": "Bhattu vimāne ramissāmi dānahaṁ,",
  "pv39:7.4_0": "Na patthaye nirayadassanāyā”ti.",
  "pv39:8.1_0": "“Eso te nirayo supāpadhamme,",
  "pv39:8.2_0": "Puññaṁ tayā akataṁ jīvaloke;",
  "pv39:8.3_0": "Na hi maccharī rosako pāpadhammo,",
  "pv39:8.4_0": "Saggūpagānaṁ labhati sahabyatan”ti.",
  "pv39:9.1_0": "“Kiṁ nu gūthañca muttañca,",
  "pv39:9.2_0": "asucī paṭidissati;",
  "pv39:9.3_0": "Duggandhaṁ kimidaṁ mīḷhaṁ,",
  "pv39:9.4_0": "kimetaṁ upavāyatī”ti.",
  "pv39:10.1_0": "“Esa saṁsavako nāma,",
  "pv39:10.2_0": "gambhīro sataporiso;",
  "pv39:10.3_0": "Yattha vassasahassāni,",
  "pv39:10.4_0": "tuvaṁ paccasi revate”ti.",
  "pv39:11.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv39:11.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv39:11.3_0": "Kena saṁsavako laddho,",
  "pv39:11.4_0": "gambhīro sataporiso”ti.",
  "pv39:12.1_0": "“Samaṇe brāhmaṇe cāpi,",
  "pv39:12.2_0": "aññe vāpi vanibbake;",
  "pv39:12.3_0": "Musāvādena vañcesi,",
  "pv39:12.4_0": "taṁ pāpaṁ pakataṁ tayā.",
  "pv39:13.1_0": "Tena saṁsavako laddho,",
  "pv39:13.2_0": "gambhīro sataporiso;",
  "pv39:13.3_0": "Tattha vassasahassāni,",
  "pv39:13.4_0": "tuvaṁ paccasi revate.",
  "pv39:14.1_0": "Hatthepi chindanti athopi pāde,",
  "pv39:14.2_0": "Kaṇṇepi chindanti athopi nāsaṁ;",
  "pv39:14.3_0": "Athopi kākoḷagaṇā samecca,",
  "pv39:14.4_0": "Saṅgamma khādanti viphandamānan”ti.",
  "pv39:15.1_0": "“Sādhu kho maṁ paṭinetha,",
  "pv39:15.2_0": "kāhāmi kusalaṁ bahuṁ;",
  "pv39:15.3_0": "Dānena samacariyāya,",
  "pv39:15.4_0": "saṁyamena damena ca;",
  "pv39:15.5_0": "Yaṁ katvā sukhitā honti,",
  "pv39:15.6_0": "na ca pacchānutappare”ti.",
  "pv39:16.1_0": "“Pure tuvaṁ pamajjitvā,",
  "pv39:16.2_0": "idāni paridevasi;",
  "pv39:16.3_0": "Sayaṁ katānaṁ kammānaṁ,",
  "pv39:16.4_0": "vipākaṁ anubhossasī”ti.",
  "pv39:17.1_0": "“Ko devalokato manussalokaṁ,",
  "pv39:17.2_0": "Gantvāna puṭṭho me evaṁ vadeyya;",
  "pv39:17.3_0": "‘Nikkhittadaṇḍesu dadātha dānaṁ,",
  "pv39:17.4_0": "Acchādanaṁ seyya mathannapānaṁ;",
  "pv39:17.5_0": "Na hi maccharī rosako pāpadhammo,",
  "pv39:17.6_0": "Saggūpagānaṁ labhati sahabyataṁ’.",
  "pv39:18.1_0": "Sāhaṁ nūna ito gantvā,",
  "pv39:18.2_0": "yoniṁ laddhāna mānusiṁ;",
  "pv39:18.3_0": "Vadaññū sīlasampannā,",
  "pv39:18.4_0": "kāhāmi kusalaṁ bahuṁ;",
  "pv39:18.5_0": "Dānena samacariyāya,",
  "pv39:18.6_0": "saṁyamena damena ca.",
  "pv39:19.1_0": "Ārāmāni ca ropissaṁ,",
  "pv39:19.2_0": "dugge saṅkamanāni ca;",
  "pv39:19.3_0": "Papañca udapānañca,",
  "pv39:19.4_0": "vippasannena cetasā.",
  "pv39:20.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "pv39:20.2_0": "yā ca pakkhassa aṭṭhamī;",
  "pv39:20.3_0": "Pāṭihāriyapakkhañca,",
  "pv39:20.4_0": "aṭṭhaṅgasusamāgataṁ.",
  "pv39:21.1_0": "Uposathaṁ upavasissaṁ,",
  "pv39:21.2_0": "sadā sīlesu saṁvutā;",
  "pv39:21.3_0": "Na ca dāne pamajjissaṁ,",
  "pv39:21.4_0": "sāmaṁ diṭṭhamidaṁ mayā”ti.",
  "pv39:22.1_0": "Iccevaṁ vippalapantiṁ,",
  "pv39:22.2_0": "phandamānaṁ tato tato;",
  "pv39:22.3_0": "Khipiṁsu niraye ghore,",
  "pv39:22.4_0": "uddhampādaṁ avaṁsiraṁ.",
  "pv39:23.1_0": "“Ahaṁ pure maccharinī ahosiṁ,",
  "pv39:23.2_0": "Paribhāsikā samaṇabrāhmaṇānaṁ;",
  "pv39:23.3_0": "Vitathena ca sāmikaṁ vañcayitvā,",
  "pv39:23.4_0": "Paccāmahaṁ niraye ghorarūpe”ti.",
  "pv39:24.1_0": "Revatīpetavatthu catutthaṁ."
}