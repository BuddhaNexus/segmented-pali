{
  "iti107:0.1_0": "Itivuttaka 107",
  "iti107:0.2_0": "Catukkanipāta",
  "iti107:0.3_0": "Brāhmaṇadhammayāgavagga",
  "iti107:0.4_0": "Bahukārasutta",
  "iti107:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti107:2.1_0": "“Bahukārā, bhikkhave,",
  "iti107:2.1_1": "brāhmaṇagahapatikā tumhākaṁ ye vo paccupaṭṭhitā cīvarapiṇḍapātasenāsanagilānapaccayabhesajjaparikkhārehi.",
  "iti107:2.2_0": "Tumhepi, bhikkhave,",
  "iti107:2.2_1": "bahukārā brāhmaṇagahapatikānaṁ yaṁ nesaṁ dhammaṁ desetha ādikalyāṇaṁ majjhekalyāṇaṁ pariyosānakalyāṇaṁ sātthaṁ sabyañjanaṁ,",
  "iti107:2.2_2": "kevalaparipuṇṇaṁ parisuddhaṁ brahmacariyaṁ pakāsetha.",
  "iti107:2.3_0": "Evamidaṁ, bhikkhave,",
  "iti107:2.3_1": "aññamaññaṁ nissāya brahmacariyaṁ vussati oghassa nittharaṇatthāya sammā dukkhassa antakiriyāyā”ti.",
  "iti107:2.4_0": "Etamatthaṁ bhagavā avoca.",
  "iti107:2.5_0": "Tatthetaṁ iti vuccati:",
  "iti107:3.1_0": "“Sāgārā anagārā ca,",
  "iti107:3.2_0": "ubho aññoññanissitā;",
  "iti107:3.3_0": "Ārādhayanti saddhammaṁ,",
  "iti107:3.4_0": "yogakkhemaṁ anuttaraṁ.",
  "iti107:4.1_0": "Sāgāresu ca cīvaraṁ,",
  "iti107:4.2_0": "paccayaṁ sayanāsanaṁ;",
  "iti107:4.3_0": "Anagārā paṭicchanti,",
  "iti107:4.4_0": "parissayavinodanaṁ.",
  "iti107:5.1_0": "Sugataṁ pana nissāya,",
  "iti107:5.2_0": "gahaṭṭhā gharamesino;",
  "iti107:5.3_0": "Saddahānā arahataṁ,",
  "iti107:5.4_0": "ariyapaññāya jhāyino.",
  "iti107:6.1_0": "Idha dhammaṁ caritvāna,",
  "iti107:6.2_0": "maggaṁ sugatigāminaṁ;",
  "iti107:6.3_0": "Nandino devalokasmiṁ,",
  "iti107:6.4_0": "modanti kāmakāmino”ti.",
  "iti107:7.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti107:7.2_0": "Aṭṭhamaṁ."
}