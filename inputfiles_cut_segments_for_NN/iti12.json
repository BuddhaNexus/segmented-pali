{
  "iti12:0.1_0": "Itivuttaka 12",
  "iti12:0.2_0": "Ekakanipāta",
  "iti12:0.3_0": "Dutiyavagga",
  "iti12:0.4_0": "Kodhapariññāsutta",
  "iti12:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti12:2.1_0": "“Kodhaṁ, bhikkhave,",
  "iti12:2.1_1": "anabhijānaṁ aparijānaṁ tattha cittaṁ avirājayaṁ appajahaṁ abhabbo dukkhakkhayāya.",
  "iti12:2.2_0": "Kodhañca kho, bhikkhave,",
  "iti12:2.2_1": "abhijānaṁ parijānaṁ tattha cittaṁ virājayaṁ pajahaṁ bhabbo dukkhakkhayāyā”ti.",
  "iti12:2.3_0": "Etamatthaṁ bhagavā avoca.",
  "iti12:2.4_0": "Tatthetaṁ iti vuccati:",
  "iti12:3.1_0": "“Yena kodhena kuddhāse,",
  "iti12:3.2_0": "sattā gacchanti duggatiṁ;",
  "iti12:3.3_0": "Taṁ kodhaṁ sammadaññāya,",
  "iti12:3.4_0": "pajahanti vipassino;",
  "iti12:3.5_0": "Pahāya na punāyanti,",
  "iti12:3.6_0": "imaṁ lokaṁ kudācanan”ti.",
  "iti12:4.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti12:4.2_0": "Dutiyaṁ."
}