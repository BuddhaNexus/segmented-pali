{
  "pv14:0.1_0": "Petavatthu",
  "pv14:0.2_0": "Ubbarivagga",
  "pv14:0.3_0": "2. Sāriputtattheramātupetivatthu",
  "pv14:1.1_0": "“Naggā dubbaṇṇarūpāsi,",
  "pv14:1.2_0": "kisā dhamanisanthatā;",
  "pv14:1.3_0": "Upphāsulike kisike,",
  "pv14:1.4_0": "kā nu tvaṁ idha tiṭṭhasi”.",
  "pv14:2.1_0": "“Ahaṁ te sakiyā mātā,",
  "pv14:2.2_0": "pubbe aññāsu jātīsu;",
  "pv14:2.3_0": "Upapannā pettivisayaṁ,",
  "pv14:2.4_0": "khuppipāsasamappitā.",
  "pv14:3.1_0": "Chaḍḍitaṁ khipitaṁ kheḷaṁ,",
  "pv14:3.2_0": "siṅghāṇikaṁ silesumaṁ;",
  "pv14:3.3_0": "Vasañca ḍayhamānānaṁ,",
  "pv14:3.4_0": "vijātānañca lohitaṁ.",
  "pv14:4.1_0": "Vaṇikānañca yaṁ ghāna-",
  "pv14:4.2_0": "sīsacchinnāna lohitaṁ;",
  "pv14:4.3_0": "Khudāparetā bhuñjāmi,",
  "pv14:4.4_0": "itthipurisanissitaṁ.",
  "pv14:5.1_0": "Pubbalohitaṁ bhakkhāmi,",
  "pv14:5.2_0": "pasūnaṁ mānusāna ca;",
  "pv14:5.3_0": "Aleṇā anagārā ca,",
  "pv14:5.4_0": "nīlamañcaparāyaṇā.",
  "pv14:6.1_0": "Dehi puttaka me dānaṁ,",
  "pv14:6.2_0": "datvā anvādisāhi me;",
  "pv14:6.3_0": "Appeva nāma mucceyyaṁ,",
  "pv14:6.4_0": "pubbalohitabhojanā”ti.",
  "pv14:7.1_0": "Mātuyā vacanaṁ sutvā,",
  "pv14:7.2_0": "upatissonukampako;",
  "pv14:7.3_0": "Āmantayi moggallānaṁ,",
  "pv14:7.4_0": "anuruddhañca kappinaṁ.",
  "pv14:8.1_0": "Catasso kuṭiyo katvā,",
  "pv14:8.2_0": "saṅghe cātuddise adā;",
  "pv14:8.3_0": "Kuṭiyo annapānañca,",
  "pv14:8.4_0": "mātu dakkhiṇamādisī.",
  "pv14:9.1_0": "Samanantarānuddiṭṭhe,",
  "pv14:9.2_0": "vipāko udapajjatha;",
  "pv14:9.3_0": "Bhojanaṁ pānīyaṁ vatthaṁ,",
  "pv14:9.4_0": "dakkhiṇāya idaṁ phalaṁ.",
  "pv14:10.1_0": "Tato suddhā sucivasanā,",
  "pv14:10.2_0": "kāsikuttamadhārinī;",
  "pv14:10.3_0": "Vicittavatthābharaṇā,",
  "pv14:10.4_0": "kolitaṁ upasaṅkami.",
  "pv14:11.1_0": "“Abhikkantena vaṇṇena,",
  "pv14:11.2_0": "yā tvaṁ tiṭṭhasi devate;",
  "pv14:11.3_0": "Obhāsentī disā sabbā,",
  "pv14:11.4_0": "osadhī viya tārakā.",
  "pv14:12.1_0": "Kena tetādiso vaṇṇo,",
  "pv14:12.2_0": "kena te idha mijjhati;",
  "pv14:12.3_0": "Uppajjanti ca te bhogā,",
  "pv14:12.4_0": "ye keci manaso piyā.",
  "pv14:13.1_0": "Pucchāmi taṁ devi mahānubhāve,",
  "pv14:13.2_0": "Manussabhūtā kimakāsi puññaṁ;",
  "pv14:13.3_0": "Kenāsi evaṁ jalitānubhāvā,",
  "pv14:13.4_0": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "pv14:14.1_0": "“Sāriputtassāhaṁ mātā,",
  "pv14:14.2_0": "pubbe aññāsu jātīsu;",
  "pv14:14.3_0": "Upapannā pettivisayaṁ,",
  "pv14:14.4_0": "khuppipāsasamappitā.",
  "pv14:15.1_0": "Chaḍḍitaṁ khipitaṁ kheḷaṁ,",
  "pv14:15.2_0": "siṅghāṇikaṁ silesumaṁ;",
  "pv14:15.3_0": "Vasañca ḍayhamānānaṁ,",
  "pv14:15.4_0": "vijātānañca lohitaṁ.",
  "pv14:16.1_0": "Vaṇikānañca yaṁ ghāna-",
  "pv14:16.2_0": "sīsacchinnāna lohitaṁ;",
  "pv14:16.3_0": "Khudāparetā bhuñjāmi,",
  "pv14:16.4_0": "itthipurisanissitaṁ.",
  "pv14:17.1_0": "Pubbalohitaṁ bhakkhissaṁ,",
  "pv14:17.2_0": "pasūnaṁ mānusāna ca;",
  "pv14:17.3_0": "Aleṇā anagārā ca,",
  "pv14:17.4_0": "nīlamañcaparāyaṇā.",
  "pv14:18.1_0": "Sāriputtassa dānena,",
  "pv14:18.2_0": "modāmi akutobhayā;",
  "pv14:18.3_0": "Muniṁ kāruṇikaṁ loke,",
  "pv14:18.4_0": "bhante vanditumāgatā”ti.",
  "pv14:19.1_0": "Sāriputtattherassa mātupetivatthu dutiyaṁ."
}