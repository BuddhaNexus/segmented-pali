{
  "thag2.32:0.1_0": "Theragāthā",
  "thag2.32:0.2_0": "Dukanipāta",
  "thag2.32:0.3_0": "Catutthavagga",
  "thag2.32:0.4_0": "2.32 Sivakattheragāthā",
  "thag2.32:1.1_0": "“Aniccāni gahakāni,",
  "thag2.32:1.2_0": "tattha tattha punappunaṁ;",
  "thag2.32:1.3_0": "Gahakāraṁ gavesanto,",
  "thag2.32:1.4_0": "dukkhā jāti punappunaṁ.",
  "thag2.32:2.1_0": "Gahakāraka diṭṭhosi,",
  "thag2.32:2.2_0": "puna gehaṁ na kāhasi;",
  "thag2.32:2.3_0": "Sabbā te phāsukā bhaggā,",
  "thag2.32:2.4_0": "thūṇikā ca vidālitā;",
  "thag2.32:2.5_0": "Vimariyādikataṁ cittaṁ,",
  "thag2.32:2.6_0": "idheva vidhamissatī”ti.",
  "thag2.32:2.7_0": "… Sivako thero …."
}