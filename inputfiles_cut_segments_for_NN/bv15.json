{
  "bv15:0.1_0": "Buddhavaṁsa",
  "bv15:0.2_0": "15 Piyadassībuddhavaṁsa",
  "bv15:1.1_0": "“Sujātassa aparena,",
  "bv15:1.2_0": "sayambhū lokanāyako;",
  "bv15:1.3_0": "Durāsado asamasamo,",
  "bv15:1.4_0": "piyadassī mahāyaso.",
  "bv15:2.1_0": "Sopi buddho amitayaso,",
  "bv15:2.2_0": "ādiccova virocati;",
  "bv15:2.3_0": "Sabbaṁ tamaṁ nihantvāna,",
  "bv15:2.4_0": "dhammacakkaṁ pavattayi.",
  "bv15:3.1_0": "Tassāpi atulatejassa,",
  "bv15:3.2_0": "Ahesuṁ abhisamayā tayo;",
  "bv15:3.3_0": "Koṭisatasahassānaṁ,",
  "bv15:3.4_0": "Paṭhamābhisamayo ahu.",
  "bv15:4.1_0": "Sudassano devarājā,",
  "bv15:4.2_0": "micchādiṭṭhimarocayi;",
  "bv15:4.3_0": "Tassa diṭṭhiṁ vinodento,",
  "bv15:4.4_0": "satthā dhammamadesayi.",
  "bv15:5.1_0": "Janasannipāto atulo,",
  "bv15:5.2_0": "mahāsannipatī tadā;",
  "bv15:5.3_0": "Navutikoṭisahassānaṁ,",
  "bv15:5.4_0": "dutiyābhisamayo ahu.",
  "bv15:6.1_0": "Yadā doṇamukhaṁ hatthiṁ,",
  "bv15:6.2_0": "vinesi narasārathi;",
  "bv15:6.3_0": "Asītikoṭisahassānaṁ,",
  "bv15:6.4_0": "tatiyābhisamayo ahu.",
  "bv15:7.1_0": "Sannipātā tayo āsuṁ,",
  "bv15:7.2_0": "tassāpi piyadassino;",
  "bv15:7.3_0": "Koṭisatasahassānaṁ,",
  "bv15:7.4_0": "paṭhamo āsi samāgamo.",
  "bv15:8.1_0": "Tato paraṁ navutikoṭī,",
  "bv15:8.2_0": "samiṁsu ekato munī;",
  "bv15:8.3_0": "Tatiye sannipātamhi,",
  "bv15:8.4_0": "asītikoṭiyo ahū.",
  "bv15:9.1_0": "Ahaṁ tena samayena,",
  "bv15:9.2_0": "kassapo nāma brāhmaṇo;",
  "bv15:9.3_0": "Ajjhāyako mantadharo,",
  "bv15:9.4_0": "tiṇṇaṁ vedāna pāragū.",
  "bv15:10.1_0": "Tassa dhammaṁ suṇitvāna,",
  "bv15:10.2_0": "pasādaṁ janayiṁ ahaṁ;",
  "bv15:10.3_0": "Koṭisatasahassehi,",
  "bv15:10.4_0": "saṅghārāmaṁ amāpayiṁ.",
  "bv15:11.1_0": "Tassa datvāna ārāmaṁ,",
  "bv15:11.2_0": "haṭṭho saṁviggamānaso;",
  "bv15:11.3_0": "Saraṇe pañca sīle ca,",
  "bv15:11.4_0": "daḷhaṁ katvā samādiyiṁ.",
  "bv15:12.1_0": "Sopi maṁ buddho byākāsi,",
  "bv15:12.2_0": "saṅghamajjhe nisīdiya;",
  "bv15:12.3_0": "‘Aṭṭhārase kappasate,",
  "bv15:12.4_0": "ayaṁ buddho bhavissati.",
  "bv15:13.1_0": "Padhānaṁ padahitvāna,",
  "bv15:13.2_0": "…pe…",
  "bv15:13.3_0": "hessāma sammukhā imaṁ’.",
  "bv15:14.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv15:14.2_0": "bhiyyo cittaṁ pasādayiṁ;",
  "bv15:14.3_0": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv15:14.4_0": "dasapāramipūriyā.",
  "bv15:15.1_0": "Sudhaññaṁ nāma nagaraṁ,",
  "bv15:15.2_0": "sudatto nāma khattiyo;",
  "bv15:15.3_0": "Candā nāmāsi janikā,",
  "bv15:15.4_0": "piyadassissa satthuno.",
  "bv15:16.1_0": "Navavassasahassāni,",
  "bv15:16.2_0": "Agāraṁ ajjha so vasi;",
  "bv15:16.3_0": "Sunimmalavimalagiriguhā,",
  "bv15:16.4_0": "Tayo pāsādamuttamā.",
  "bv15:17.1_0": "Tettiṁsasahassāni ca,",
  "bv15:17.2_0": "Nāriyo samalaṅkatā;",
  "bv15:17.3_0": "Vimalā nāma nārī ca,",
  "bv15:17.4_0": "Kañcanāveḷo nāma atrajo.",
  "bv15:18.1_0": "Nimitte caturo disvā,",
  "bv15:18.2_0": "rathayānena nikkhami;",
  "bv15:18.3_0": "Chamāsaṁ padhānacāraṁ,",
  "bv15:18.4_0": "acarī purisuttamo.",
  "bv15:19.1_0": "Brahmunā yācito santo,",
  "bv15:19.2_0": "piyadassī mahāmuni;",
  "bv15:19.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv15:19.4_0": "usabhuyyāne manorame.",
  "bv15:20.1_0": "Pālito sabbadassī ca,",
  "bv15:20.2_0": "ahesuṁ aggasāvakā;",
  "bv15:20.3_0": "Sobhito nāmupaṭṭhāko,",
  "bv15:20.4_0": "piyadassissa satthuno.",
  "bv15:21.1_0": "Sujātā dhammadinnā ca,",
  "bv15:21.2_0": "ahesuṁ aggasāvikā;",
  "bv15:21.3_0": "Bodhi tassa bhagavato,",
  "bv15:21.4_0": "kakudhoti pavuccati.",
  "bv15:22.1_0": "Sandhako dhammako ceva,",
  "bv15:22.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv15:22.3_0": "Visākhā dhammadinnā ca,",
  "bv15:22.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv15:23.1_0": "Sopi buddho amitayaso,",
  "bv15:23.2_0": "dvattiṁsavaralakkhaṇo;",
  "bv15:23.3_0": "Asītihatthamubbedho,",
  "bv15:23.4_0": "sālarājāva dissati.",
  "bv15:24.1_0": "Aggicandasūriyānaṁ,",
  "bv15:24.2_0": "natthi tādisikā pabhā;",
  "bv15:24.3_0": "Yathā ahu pabhā tassa,",
  "bv15:24.4_0": "asamassa mahesino.",
  "bv15:25.1_0": "Tassāpi devadevassa,",
  "bv15:25.2_0": "āyu tāvatakaṁ ahu;",
  "bv15:25.3_0": "Navutivassasahassāni,",
  "bv15:25.4_0": "loke aṭṭhāsi cakkhumā.",
  "bv15:26.1_0": "Sopi buddho asamasamo,",
  "bv15:26.2_0": "Yugānipi tāni atuliyāni;",
  "bv15:26.3_0": "Sabbaṁ tamantarahitaṁ,",
  "bv15:26.4_0": "Nanu rittā sabbasaṅkhārā.",
  "bv15:27.1_0": "Piyadassī munivaro,",
  "bv15:27.2_0": "Assatthārāmamhi nibbuto;",
  "bv15:27.3_0": "Tatthevassa jinathūpo,",
  "bv15:27.4_0": "Tīṇiyojanamuggato”ti. ",
  "bv15:28.1_0": "Piyadassissa bhagavato vaṁso terasamo."
}