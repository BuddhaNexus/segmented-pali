{
  "tha-ap490:0.1_0": "Therāpadāna",
  "tha-ap490:0.2_0": "Paṁsukūlavagga",
  "tha-ap490:0.3_0": "8. Taraṇiyattheraapadāna",
  "tha-ap490:1.1_0": "“Atthadassī tu bhagavā,",
  "tha-ap490:1.2_0": "sayambhū lokanāyako;",
  "tha-ap490:1.3_0": "Vinatā nadiyā tīraṁ,",
  "tha-ap490:1.4_0": "upāgacchi tathāgato.",
  "tha-ap490:2.1_0": "Udakā abhinikkhamma,",
  "tha-ap490:2.2_0": "kacchapo vārigocaro;",
  "tha-ap490:2.3_0": "Buddhaṁ tāretukāmohaṁ,",
  "tha-ap490:2.4_0": "upesiṁ lokanāyakaṁ.",
  "tha-ap490:3.1_0": "‘Abhirūhatu maṁ buddho,",
  "tha-ap490:3.2_0": "atthadassī mahāmuni;",
  "tha-ap490:3.3_0": "Ahaṁ taṁ tārayissāmi,",
  "tha-ap490:3.4_0": "dukkhassantakaro tuvaṁ’.",
  "tha-ap490:4.1_0": "Mama saṅkappamaññāya,",
  "tha-ap490:4.2_0": "atthadassī mahāyaso;",
  "tha-ap490:4.3_0": "Abhirūhitvā me piṭṭhiṁ,",
  "tha-ap490:4.4_0": "aṭṭhāsi lokanāyako.",
  "tha-ap490:5.1_0": "Yato sarāmi attānaṁ,",
  "tha-ap490:5.2_0": "yato pattosmi viññutaṁ;",
  "tha-ap490:5.3_0": "Sukhaṁ me tādisaṁ natthi,",
  "tha-ap490:5.4_0": "phuṭṭhe pādatale yathā.",
  "tha-ap490:6.1_0": "Uttaritvāna sambuddho,",
  "tha-ap490:6.2_0": "atthadassī mahāyaso;",
  "tha-ap490:6.3_0": "Naditīramhi ṭhatvāna,",
  "tha-ap490:6.4_0": "imā gāthā abhāsatha.",
  "tha-ap490:7.1_0": "‘Yāvatā vattate cittaṁ,",
  "tha-ap490:7.2_0": "gaṅgāsotaṁ tarāmahaṁ;",
  "tha-ap490:7.3_0": "Ayañca kacchapo rājā,",
  "tha-ap490:7.4_0": "tāresi mama paññavā.",
  "tha-ap490:8.1_0": "Iminā buddhataraṇena,",
  "tha-ap490:8.2_0": "mettacittavatāya ca;",
  "tha-ap490:8.3_0": "Aṭṭhārase kappasate,",
  "tha-ap490:8.4_0": "devaloke ramissati.",
  "tha-ap490:9.1_0": "Devalokā idhāgantvā,",
  "tha-ap490:9.2_0": "sukkamūlena codito;",
  "tha-ap490:9.3_0": "Ekāsane nisīditvā,",
  "tha-ap490:9.4_0": "kaṅkhāsotaṁ tarissati.",
  "tha-ap490:10.1_0": "Yathāpi bhaddake khette,",
  "tha-ap490:10.2_0": "bījaṁ appampi ropitaṁ;",
  "tha-ap490:10.3_0": "Sammādhāre pavecchante,",
  "tha-ap490:10.4_0": "phalaṁ toseti kassakaṁ’.",
  "tha-ap490:11.1_0": "Tathevidaṁ buddhakhettaṁ,",
  "tha-ap490:11.2_0": "sammāsambuddhadesitaṁ;",
  "tha-ap490:11.3_0": "Sammādhāre pavecchante,",
  "tha-ap490:11.4_0": "phalaṁ maṁ tosayissati.",
  "tha-ap490:12.1_0": "Padhānapahitattomhi,",
  "tha-ap490:12.2_0": "upasanto nirūpadhi;",
  "tha-ap490:12.3_0": "Sabbāsave pariññāya,",
  "tha-ap490:12.4_0": "viharāmi anāsavo.",
  "tha-ap490:13.1_0": "Aṭṭhārase kappasate,",
  "tha-ap490:13.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap490:13.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap490:13.4_0": "taraṇāya idaṁ phalaṁ.",
  "tha-ap490:14.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap490:14.2_0": "…pe…",
  "tha-ap490:14.3_0": "viharāmi anāsavo.",
  "tha-ap490:15.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap490:15.2_0": "…pe…",
  "tha-ap490:15.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap490:16.1_0": "Paṭisambhidā catasso,",
  "tha-ap490:16.2_0": "…pe…",
  "tha-ap490:16.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap490:17.1_0": "Itthaṁ sudaṁ āyasmā taraṇiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap490:18.1_0": "Taraṇiyattherassāpadānaṁ aṭṭhamaṁ."
}