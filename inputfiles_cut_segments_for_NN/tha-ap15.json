{
  "tha-ap15:0.1_0": "Therāpadāna",
  "tha-ap15:0.2_0": "Sīhāsaniyavagga",
  "tha-ap15:0.3_0": "3. Nandattheraapadāna",
  "tha-ap15:1.1_0": "“Padumuttarassa bhagavato,",
  "tha-ap15:1.2_0": "Lokajeṭṭhassa tādino;",
  "tha-ap15:1.3_0": "Vatthaṁ khomaṁ mayā dinnaṁ,",
  "tha-ap15:1.4_0": "Sayambhussa mahesino.",
  "tha-ap15:2.1_0": "Taṁ me buddho viyākāsi,",
  "tha-ap15:2.2_0": "jalajuttaranāmako;",
  "tha-ap15:2.3_0": "‘Iminā vatthadānena,",
  "tha-ap15:2.4_0": "hemavaṇṇo bhavissasi.",
  "tha-ap15:3.1_0": "Dve sampattī anubhotvā,",
  "tha-ap15:3.2_0": "kusalamūlehi codito;",
  "tha-ap15:3.3_0": "Gotamassa bhagavato,",
  "tha-ap15:3.4_0": "kaniṭṭho tvaṁ bhavissasi.",
  "tha-ap15:4.1_0": "Rāgaratto sukhasīlo,",
  "tha-ap15:4.2_0": "kāmesu gedhamāyuto;",
  "tha-ap15:4.3_0": "Buddhena codito santo,",
  "tha-ap15:4.4_0": "tadā tvaṁ pabbajissasi.",
  "tha-ap15:5.1_0": "Pabbajitvāna tvaṁ tattha,",
  "tha-ap15:5.2_0": "kusalamūlena codito;",
  "tha-ap15:5.3_0": "Sabbāsave pariññāya,",
  "tha-ap15:5.4_0": "nibbāyissasināsavo’.",
  "tha-ap15:6.1_0": "Satta kappasahassamhi,",
  "tha-ap15:6.2_0": "caturo ceḷanāmakā;",
  "tha-ap15:6.3_0": "Saṭṭhi kappasahassamhi,",
  "tha-ap15:6.4_0": "upacelā catujjanā.",
  "tha-ap15:7.1_0": "Pañca kappasahassamhi,",
  "tha-ap15:7.2_0": "ceḷāva caturo janā;",
  "tha-ap15:7.3_0": "Sattaratanasampannā,",
  "tha-ap15:7.4_0": "catudīpamhi issarā.",
  "tha-ap15:8.1_0": "Paṭisambhidā catasso,",
  "tha-ap15:8.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap15:8.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap15:8.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap15:9.1_0": "Itthaṁ sudaṁ āyasmā nando thero imā gāthāyo abhāsitthāti.",
  "tha-ap15:10.1_0": "Nandattherassāpadānaṁ tatiyaṁ."
}