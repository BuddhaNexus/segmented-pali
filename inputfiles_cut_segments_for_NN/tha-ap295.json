{
  "tha-ap295:0.1_0": "Therāpadāna",
  "tha-ap295:0.2_0": "Citakapūjakavagga",
  "tha-ap295:0.3_0": "3. Chattadāyakattheraapadāna",
  "tha-ap295:1.1_0": "“Putto mama pabbajito,",
  "tha-ap295:1.2_0": "kāsāyavasano tadā;",
  "tha-ap295:1.3_0": "So ca buddhattaṁ sampatto,",
  "tha-ap295:1.4_0": "nibbuto lokapūjito.",
  "tha-ap295:2.1_0": "Vicinanto sakaṁ puttaṁ,",
  "tha-ap295:2.2_0": "agamaṁ pacchato ahaṁ;",
  "tha-ap295:2.3_0": "Nibbutassa mahantassa,",
  "tha-ap295:2.4_0": "citakaṁ agamāsahaṁ.",
  "tha-ap295:3.1_0": "Paggayha añjaliṁ tattha,",
  "tha-ap295:3.2_0": "vanditvā citakaṁ ahaṁ;",
  "tha-ap295:3.3_0": "Setacchattañca paggayha,",
  "tha-ap295:3.4_0": "āropesiṁ ahaṁ tadā.",
  "tha-ap295:4.1_0": "Catunnavutito kappe,",
  "tha-ap295:4.2_0": "yaṁ chattamabhiropayiṁ;",
  "tha-ap295:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap295:4.4_0": "chattadānassidaṁ phalaṁ.",
  "tha-ap295:5.1_0": "Pañcavīse ito kappe,",
  "tha-ap295:5.2_0": "satta āsuṁ janādhipā;",
  "tha-ap295:5.3_0": "Mahārahasanāmā te,",
  "tha-ap295:5.4_0": "cakkavattī mahabbalā.",
  "tha-ap295:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap295:6.2_0": "…pe…",
  "tha-ap295:6.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap295:7.1_0": "Itthaṁ sudaṁ āyasmā chattadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap295:8.1_0": "Chattadāyakattherassāpadānaṁ tatiyaṁ."
}