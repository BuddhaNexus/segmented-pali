{
  "atk-s0303a10:0_0": "11. Valāhakasaṁyuttavaṇṇanā",
  "atk-s0303a10:1_0": "550-606.",
  "atk-s0303a10:1_1": "Valāhakasaṁyutte valāhakakāyikāti valāhakanāmake devakāye uppannā ākāsacārikadevā.",
  "atk-s0303a10:1_2": "Sītavalāhakāti sītakaraṇavalāhakā.",
  "atk-s0303a10:1_3": "Sesapadesupi eseva nayo.",
  "atk-s0303a10:1_4": "Cetopaṇidhimanvāyāti cittaṭṭhapanaṁ āgamma.",
  "atk-s0303a10:1_5": "Sītaṁ hotīti yaṁ vassāne vā hemante vā sītaṁ hoti,",
  "atk-s0303a10:1_6": "taṁ utusamuṭṭhānameva.",
  "atk-s0303a10:1_7": "Yaṁ pana sītepi atisītaṁ,",
  "atk-s0303a10:1_8": "gimhe ca uppannaṁ sītaṁ,",
  "atk-s0303a10:1_9": "taṁ devatānubhāvena nibbattaṁ sītaṁ nāma.",
  "atk-s0303a10:1_10": "Uṇhaṁ hotīti yaṁ gimhāne uṇhaṁ,",
  "atk-s0303a10:1_11": "taṁ utusamuṭṭhānikaṁ pākatikameva.",
  "atk-s0303a10:1_12": "Yaṁ pana uṇhepi atiuṇhaṁ,",
  "atk-s0303a10:1_13": "sītakāle ca uppannaṁ uṇhaṁ,",
  "atk-s0303a10:1_14": "taṁ devatānubhāvena nibbattaṁ uṇhaṁ nāma.",
  "atk-s0303a10:1_15": "Abbhaṁ hotīti abbhamaṇḍapo hoti.",
  "atk-s0303a10:1_16": "Idhāpi yaṁ vassāne ca sisire ca abbhaṁ uppajjati,",
  "atk-s0303a10:1_17": "taṁ utusamuṭṭhānikaṁ pākatikameva.",
  "atk-s0303a10:1_18": "Yaṁ pana abbheyeva atiabbhaṁ,",
  "atk-s0303a10:1_19": "sattasattāhampi candasūriye chādetvā ekandhakāraṁ karoti,",
  "atk-s0303a10:1_20": "yañca cittavesākhamāsesu abbhaṁ,",
  "atk-s0303a10:1_21": "taṁ devatānubhāvena uppannaṁ abbhaṁ nāma.",
  "atk-s0303a10:1_22": "Vāto hotīti yo tasmiṁ tasmiṁ utumhi uttaradakkhiṇādipakativāto hoti,",
  "atk-s0303a10:1_23": "ayaṁ utusamuṭṭhānova.",
  "atk-s0303a10:1_24": "Yopi pana rukkhakkhandhādipadālano ativāto nāma atthi, ayañceva,",
  "atk-s0303a10:1_25": "yo ca aññopi akālavāto,",
  "atk-s0303a10:1_26": "ayaṁ devatānubhāvanibbatto nāma.",
  "atk-s0303a10:1_27": "Devo vassatīti yaṁ vassike cattāro māse vassaṁ,",
  "atk-s0303a10:1_28": "taṁ utusamuṭṭhānameva.",
  "atk-s0303a10:1_29": "Yaṁ pana vasseyeva ativassaṁ,",
  "atk-s0303a10:1_30": "yañca cittavesākhamāsesu vassaṁ,",
  "atk-s0303a10:1_31": "taṁ devatānubhāvanibbattaṁ nāma.",
  "atk-s0303a10:2_0": "Tatridaṁ vatthu –",
  "atk-s0303a10:2_1": "eko kira vassavalāhakadevaputto talakūṭakavāsi khīṇāsavattherassa santikaṁ gantvā vanditvā aṭṭhāsi.",
  "atk-s0303a10:2_2": "Thero “kosi tva”nti pucchi. “Ahaṁ, bhante,",
  "atk-s0303a10:2_3": "vassavalāhakadevaputto”ti.",
  "atk-s0303a10:2_4": "“Tumhākaṁ kira cittena devo vassatī”ti? “Āma,",
  "atk-s0303a10:2_5": "bhante”ti.",
  "atk-s0303a10:2_6": "“Passitukāmā maya”nti.",
  "atk-s0303a10:2_7": "“Temissatha,",
  "atk-s0303a10:2_8": "bhante”ti.",
  "atk-s0303a10:2_9": "“Meghasīsaṁ vā gajjitaṁ vā na paññāyati,",
  "atk-s0303a10:2_10": "kathaṁ temissāmā”ti? “Bhante,",
  "atk-s0303a10:2_11": "amhākaṁcittena devo vassati,",
  "atk-s0303a10:2_12": "tumhe paṇṇasālaṁ pavisathā”ti.",
  "atk-s0303a10:2_13": "“Sādhu devaputtā”ti so pāde dhovitvā paṇṇasālaṁ pāvisi.",
  "atk-s0303a10:2_14": "Devaputto tasmiṁ pavisanteyeva ekaṁ gītaṁ gāyitvā hatthaṁ ukkhipi.",
  "atk-s0303a10:2_15": "Samantā tiyojanaṭṭhānaṁ ekameghaṁ ahosi.",
  "atk-s0303a10:2_16": "Thero addhatinto paṇṇasālaṁ paviṭṭhoti.",
  "atk-s0303a10:2_17": "Apica devo nāmesa aṭṭhahi kāraṇehi vassati nāgānubhāvena supaṇṇānubhāvena devatānubhāvena saccakiriyāya",
  "atk-s0303a10:2_18": "utusamuṭṭhānena mārāvaṭṭanena iddhibalena vināsameghenāti.",
  "atk-s0303a10:3_0": "Valāhakasaṁyuttavaṇṇanā niṭṭhitā."
}