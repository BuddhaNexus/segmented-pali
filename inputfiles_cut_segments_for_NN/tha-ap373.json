{
  "tha-ap373:0.1_0": "Therāpadāna",
  "tha-ap373:0.2_0": "Bodhivandanavagga",
  "tha-ap373:0.3_0": "1. Bodhivandakattheraapadāna",
  "tha-ap373:1.1_0": "“Pāṭaliṁ haritaṁ disvā,",
  "tha-ap373:1.2_0": "pādapaṁ dharaṇīruhaṁ;",
  "tha-ap373:1.3_0": "Ekaṁsaṁ añjaliṁ katvā,",
  "tha-ap373:1.4_0": "avandiṁ pāṭaliṁ ahaṁ.",
  "tha-ap373:2.1_0": "Añjaliṁ paggahetvāna,",
  "tha-ap373:2.2_0": "garuṁ katvāna mānasaṁ;",
  "tha-ap373:2.3_0": "Antosuddhaṁ bahisuddhaṁ,",
  "tha-ap373:2.4_0": "suvimuttamanāsavaṁ.",
  "tha-ap373:3.1_0": "Vipassiṁ lokamahitaṁ,",
  "tha-ap373:3.2_0": "karuṇāñāṇasāgaraṁ;",
  "tha-ap373:3.3_0": "Sammukhā viya sambuddhaṁ,",
  "tha-ap373:3.4_0": "avandiṁ pāṭaliṁ ahaṁ.",
  "tha-ap373:4.1_0": "Ekanavutito kappe,",
  "tha-ap373:4.2_0": "yaṁ bodhimabhivandahaṁ;",
  "tha-ap373:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap373:4.4_0": "vandanāya idaṁ phalaṁ.",
  "tha-ap373:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap373:5.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap373:5.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap373:5.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap373:6.1_0": "Itthaṁ sudaṁ āyasmā bodhivandako thero imā gāthāyo abhāsitthāti.",
  "tha-ap373:7.1_0": "Bodhivandakattherassāpadānaṁ paṭhamaṁ."
}