{
  "mil7.8.7:0.1_0": "Milindapañha",
  "mil7.8.7:0.2_0": "Opammakathāpañha",
  "mil7.8.7:0.3_0": "Kumbhavagga",
  "mil7.8.7:0.4_0": "7. Issāsaṅgapañha",
  "mil7.8.7:1.1_0": "“Bhante nāgasena,",
  "mil7.8.7:1.1_1": "‘issāsassa cattāri aṅgāni gahetabbānī’ti yaṁ vadesi,",
  "mil7.8.7:1.1_2": "katamāni tāni cattāri aṅgāni gahetabbānī”ti?",
  "mil7.8.7:1.2_0": "“Yathā, mahārāja,",
  "mil7.8.7:1.2_1": "issāso sare pātayanto ubho pāde pathaviyaṁ daḷhaṁ patiṭṭhāpeti, jaṇṇuavekallaṁ karoti,",
  "mil7.8.7:1.2_2": "sarakalāpaṁ kaṭisandhimhi ṭhapeti, kāyaṁ upatthaddhaṁ karoti,",
  "mil7.8.7:1.2_3": "dve hatthe sandhiṭṭhānaṁ āropeti, muṭṭhiṁ pīḷayati, aṅguliyo nirantaraṁ karoti, gīvaṁ paggaṇhāti, cakkhūni mukhañca pidahati, nimittaṁ ujuṁ karoti,",
  "mil7.8.7:1.2_4": "hāsamuppādeti ‘vijjhissāmī’ti;",
  "mil7.8.7:1.3_0": "evameva kho, mahārāja,",
  "mil7.8.7:1.3_1": "yoginā yogāvacarena sīlapathaviyaṁ vīriyapāde patiṭṭhāpetabbaṁ,",
  "mil7.8.7:1.3_2": "khantisoraccaṁ avekallaṁ kātabbaṁ, saṁvare cittaṁ ṭhapetabbaṁ,",
  "mil7.8.7:1.3_3": "saṁyamaniyame attā upanetabbo, icchā mucchā pīḷayitabbā,",
  "mil7.8.7:1.3_4": "yoniso manasikāre cittaṁ nirantaraṁ kātabbaṁ, vīriyaṁ paggahetabbaṁ, cha dvārā pidahitabbā, sati upaṭṭhapetabbā,",
  "mil7.8.7:1.3_5": "hāsamuppādetabbaṁ ‘sabbakilese ñāṇanārācena vijjhissāmī’ti.",
  "mil7.8.7:1.4_0": "Idaṁ, mahārāja,",
  "mil7.8.7:1.4_1": "issāsassa paṭhamaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.8.7:2.1_0": "Puna caparaṁ, mahārāja,",
  "mil7.8.7:2.1_1": "issāso āḷakaṁ pariharati vaṅkajimhakuṭilanārācassa ujukaraṇāya;",
  "mil7.8.7:2.2_0": "evameva kho, mahārāja,",
  "mil7.8.7:2.2_1": "yoginā yogāvacarena imasmiṁ kāye satipaṭṭhānaāḷakaṁ pariharitabbaṁ vaṅkajimhakuṭilacittassa ujukaraṇāya.",
  "mil7.8.7:2.3_0": "Idaṁ, mahārāja,",
  "mil7.8.7:2.3_1": "issāsassa dutiyaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.8.7:3.1_0": "Puna caparaṁ, mahārāja, issāso lakkhe upāseti;",
  "mil7.8.7:3.2_0": "evameva kho, mahārāja,",
  "mil7.8.7:3.2_1": "yoginā yogāvacarena imasmiṁ kāye upāsitabbaṁ.",
  "mil7.8.7:3.3_0": "Kathaṁ,",
  "mil7.8.7:3.3_1": "mahārāja yoginā yogāvacarena imasmiṁ kāye upāsitabbaṁ?",
  "mil7.8.7:3.4_0": "Aniccato upāsitabbaṁ, dukkhato upāsitabbaṁ, anattato upāsitabbaṁ, rogato …pe…",
  "mil7.8.7:3.5_0": "gaṇḍato …",
  "mil7.8.7:3.6_0": "sallato …",
  "mil7.8.7:3.7_0": "aghato …",
  "mil7.8.7:3.8_0": "ābādhato …",
