  "mil7.8.7:3.36_0": "maraṇadhammato …",
  "mil7.8.7:3.37_0": "sokadhammato …",
  "mil7.8.7:3.38_0": "paridevadhammato …",
  "mil7.8.7:3.39_0": "upāyāsadhammato …",
  "mil7.8.7:3.40_0": "saṅkilesadhammato …",
  "mil7.8.7:3.41_0": "evaṁ kho, mahārāja,",
  "mil7.8.7:3.41_1": "yoginā yogāvacarena imasmiṁ kāye upāsitabbaṁ.",
  "mil7.8.7:3.42_0": "Idaṁ, mahārāja,",
  "mil7.8.7:3.42_1": "issāsassa tatiyaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.8.7:4.1_0": "Puna caparaṁ, mahārāja, issāso sāyaṁ pātaṁ upāsati;",
  "mil7.8.7:4.2_0": "evameva kho, mahārāja,",
  "mil7.8.7:4.2_1": "yoginā yogāvacarena sāyaṁ pātaṁ ārammaṇe upāsitabbaṁ.",
  "mil7.8.7:4.3_0": "Idaṁ, mahārāja,",
  "mil7.8.7:4.3_1": "issāsassa catutthaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.8.7:4.4_0": "Bhāsitampetaṁ, mahārāja,",
  "mil7.8.7:4.4_1": "therena sāriputtena dhammasenāpatinā—",
  "mil7.8.7:5.1_0": "‘Yathā issāsako nāma,",
  "mil7.8.7:5.2_0": "sāyaṁ pātaṁ upāsati;",
  "mil7.8.7:5.3_0": "Upāsanaṁ ariñcanto,",
  "mil7.8.7:5.4_0": "labhate bhattavetanaṁ.",
  "mil7.8.7:6.1_0": "Tatheva buddhaputtopi,",
  "mil7.8.7:6.2_0": "Karoti kāyupāsanaṁ;",
  "mil7.8.7:6.3_0": "Kāyupāsanaṁ ariñcanto,",
  "mil7.8.7:6.4_0": "Arahattamadhigacchatī’”ti.",
  "mil7.8.7:7.1_0": "Issāsaṅgapañho sattamo.",
  "mil7.8.7:8.1_0": "Kumbhavaggo sattamo.",
  "mil7.8.7:9.1_0": "Tassuddānaṁ",
  "mil7.8.7:10.1_0": "Kumbho ca kāḷāyaso ca,",
  "mil7.8.7:10.2_0": "chattaṁ khettañca agado;",
  "mil7.8.7:10.3_0": "Bhojanena ca issāso,",
  "mil7.8.7:10.4_0": "vuttaṁ dāni vidūhīti.",
  "mil7.8.7:11.1_0": "Opammakathāpañho niṭṭhito."
}