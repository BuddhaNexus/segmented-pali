{
  "ja382:0.1_0": "Jātaka",
  "ja382:0.2_0": "Chakkanipāta",
  "ja382:0.3_0": "Avāriyavagga",
  "ja382:0.4_0": "7. Sirikāḷakaṇṇijātaka",
  "ja382:1.1_0": "“Kā nu kāḷena vaṇṇena,",
  "ja382:1.2_0": "na cāpi piyadassanā;",
  "ja382:1.3_0": "Kā vā tvaṁ kassa vā dhītā,",
  "ja382:1.4_0": "kathaṁ jānemu taṁ mayaṁ”.",
  "ja382:2.1_0": "“Mahārājassahaṁ dhītā,",
  "ja382:2.2_0": "virūpakkhassa caṇḍiyā;",
  "ja382:2.3_0": "Ahaṁ kāḷī alakkhikā,",
  "ja382:2.4_0": "kāḷakaṇṇīti maṁ vidū;",
  "ja382:2.5_0": "Okāsaṁ yācito dehi,",
  "ja382:2.6_0": "vasemu tava santike”.",
  "ja382:3.1_0": "“Kiṁsīle kiṁsamācāre,",
  "ja382:3.2_0": "Purise nivisase tuvaṁ;",
  "ja382:3.3_0": "Puṭṭhā me kāḷi akkhāhi,",
  "ja382:3.4_0": "Kathaṁ jānemu taṁ mayaṁ”.",
  "ja382:4.1_0": "“Makkhī paḷāsī sārambhī,",
  "ja382:4.2_0": "issukī maccharī saṭho;",
  "ja382:4.3_0": "So mayhaṁ puriso kanto,",
  "ja382:4.4_0": "laddhaṁ yassa vinassati.",
  "ja382:5.1_0": "Kodhano upanāhī ca,",
  "ja382:5.2_0": "pisuṇo ca vibhedako;",
  "ja382:5.3_0": "Kaṇḍakavāco pharuso,",
  "ja382:5.4_0": "so me kantataro tato.",
  "ja382:6.1_0": "Ajja suveti puriso,",
  "ja382:6.2_0": "sadatthaṁ nāvabujjhati;",
  "ja382:6.3_0": "Ovajjamāno kuppati,",
  "ja382:6.4_0": "seyyaṁ so atimaññati.",
  "ja382:7.1_0": "Davappaluddho puriso,",
  "ja382:7.2_0": "sabbamittehi dhaṁsati;",
  "ja382:7.3_0": "So mayhaṁ puriso kanto,",
  "ja382:7.4_0": "tasmiṁ homi anāmayā”.",
  "ja382:8.1_0": "“Apehi etto tvaṁ kāḷi,",
  "ja382:8.2_0": "netaṁ amhesu vijjati;",
  "ja382:8.3_0": "Aññaṁ janapadaṁ gaccha,",
  "ja382:8.4_0": "nigame rājadhāniyo”.",
  "ja382:9.1_0": "“Ahampi kho taṁ jānāmi,",
  "ja382:9.2_0": "netaṁ tumhesu vijjati;",
  "ja382:9.3_0": "Santi loke alakkhikā,",
  "ja382:9.4_0": "saṅgharanti bahuṁ dhanaṁ;",
  "ja382:9.5_0": "Ahaṁ devo ca me bhātā,",
  "ja382:9.6_0": "ubho naṁ vidhamāmase”.",
  "ja382:10.1_0": "“Kā nu dibbena vaṇṇena,",
  "ja382:10.2_0": "pathabyā supatiṭṭhitā;",
  "ja382:10.3_0": "Kā vā tvaṁ kassa vā dhītā,",
  "ja382:10.4_0": "kathaṁ jānemu taṁ mayaṁ”.",
  "ja382:11.1_0": "“Mahārājassahaṁ dhītā,",
  "ja382:11.2_0": "dhataraṭṭhassa sirīmato;",
  "ja382:11.3_0": "Ahaṁ sirī ca lakkhī ca,",
  "ja382:11.4_0": "bhūripaññāti maṁ vidū;",
  "ja382:11.5_0": "Okāsaṁ yācito dehi,",
  "ja382:11.6_0": "vasemu tava santike”.",
  "ja382:12.1_0": "“Kiṁsīle kiṁsamācāre,",
  "ja382:12.2_0": "Purise nivisase tuvaṁ;",
  "ja382:12.3_0": "Puṭṭhā me lakkhi akkhāhi,",
  "ja382:12.4_0": "Kathaṁ jānemu taṁ mayaṁ”.",
  "ja382:13.1_0": "“Yo cāpi sīte atha vāpi uṇhe,",
  "ja382:13.2_0": "Vātātape ḍaṁsasarīsape ca;",
  "ja382:13.3_0": "Khudhaṁ pipāsaṁ abhibhuyya sabbaṁ,",
  "ja382:13.4_0": "Rattindivaṁ yo satataṁ niyutto.",
  "ja382:14.1_0": "Kālāgatañca na hāpeti atthaṁ,",
  "ja382:14.2_0": "So me manāpo nivise ca tamhi;",
  "ja382:14.3_0": "Akkodhano mittavā cāgavā ca,",
  "ja382:14.4_0": "Sīlūpapanno asaṭhojubhūto.",
  "ja382:15.1_0": "Saṅgāhako sakhilo saṇhavāco,",
  "ja382:15.2_0": "Mahattapattopi nivātavutti;",
  "ja382:15.3_0": "Tasmiṁhaṁ pose vipulā bhavāmi,",
  "ja382:15.4_0": "Ūmi samuddassa yathāpi vaṇṇaṁ.",
  "ja382:16.1_0": "Yo cāpi mitte atha vā amitte,",
  "ja382:16.2_0": "Seṭṭhe sarikkhe atha vāpi hīne;",
  "ja382:16.3_0": "Atthaṁ carantaṁ atha vā anatthaṁ,",
  "ja382:16.4_0": "Āvī raho saṅgahameva vatte.",
  "ja382:17.1_0": "Vācaṁ na vajjā pharusaṁ kadāci,",
  "ja382:17.2_0": "Matassa jīvassa ca tassa homi;",
  "ja382:17.3_0": "Etesaṁ yo aññataraṁ labhitvā,",
  "ja382:17.4_0": "Kantā sirī majjati appapañño;",
  "ja382:17.5_0": "Taṁ dittarūpaṁ visamaṁ carantaṁ,",
  "ja382:17.6_0": "Karīsaṭhānaṁva vivajjayāmi.",
  "ja382:18.1_0": "Attanā kurute lakkhiṁ,",
  "ja382:18.2_0": "alakkhiṁ kurutattanā;",
  "ja382:18.3_0": "Na hi lakkhiṁ alakkhiṁ vā,",
  "ja382:18.4_0": "añño aññassa kārako”ti.",
  "ja382:19.1_0": "Sirikāḷakaṇṇijātakaṁ sattamaṁ."
}