{
  "cp31:0.1_0": "Cariyāpiṭaka",
  "cp31:0.2_0": "Yudhañjayavagga",
  "cp31:0.3_0": "Saccapāramī 5",
  "cp31:0.4_0": "Kaṇhadīpāyanacariya",
  "cp31:1.1_0": "“Punāparaṁ yadā homi,",
  "cp31:1.2_0": "kaṇhadīpāyano isi;",
  "cp31:1.3_0": "Paropaññāsavassāni,",
  "cp31:1.4_0": "anabhiratocariṁ ahaṁ.",
  "cp31:2.1_0": "Na koci etaṁ jānāti,",
  "cp31:2.2_0": "Anabhiratimanaṁ mama;",
  "cp31:2.3_0": "Ahañhi kassaci nācikkhiṁ,",
  "cp31:2.4_0": "Arati me carati mānase.",
  "cp31:3.1_0": "Sabrahmacārī maṇḍabyo,",
  "cp31:3.2_0": "sahāyo me mahāisi;",
  "cp31:3.3_0": "Pubbakammasamāyutto,",
  "cp31:3.4_0": "sūlamāropanaṁ labhi.",
  "cp31:4.1_0": "Tamahaṁ upaṭṭhahitvāna,",
  "cp31:4.2_0": "ārogyamanupāpayiṁ;",
  "cp31:4.3_0": "Āpucchitvāna āgañchiṁ,",
  "cp31:4.4_0": "yaṁ mayhaṁ sakamassamaṁ.",
  "cp31:5.1_0": "Sahāyo brāhmaṇo mayhaṁ,",
  "cp31:5.2_0": "bhariyaṁ ādāya puttakaṁ;",
  "cp31:5.3_0": "Tayo janā samāgantvā,",
  "cp31:5.4_0": "āgañchuṁ pāhunāgataṁ.",
  "cp31:6.1_0": "Sammodamāno tehi saha,",
  "cp31:6.2_0": "nisinno sakamassame;",
  "cp31:6.3_0": "Dārako vaṭṭamanukkhipaṁ,",
  "cp31:6.4_0": "āsīvisamakopayi.",
  "cp31:7.1_0": "Tato so vaṭṭagataṁ maggaṁ,",
  "cp31:7.2_0": "anvesanto kumārako;",
  "cp31:7.3_0": "Āsīvisassa hatthena,",
  "cp31:7.4_0": "uttamaṅgaṁ parāmasi.",
  "cp31:8.1_0": "Tassa āmasane kuddho,",
  "cp31:8.2_0": "sappo visabalassito;",
  "cp31:8.3_0": "Kupito paramakopena,",
  "cp31:8.4_0": "aḍaṁsi dārakaṁ khaṇe.",
  "cp31:9.1_0": "Sahadaṭṭho āsīvisena,",
  "cp31:9.2_0": "dārako papati bhūmiyaṁ;",
  "cp31:9.3_0": "Tenāhaṁ dukkhito āsiṁ,",
  "cp31:9.4_0": "mama vāhasi taṁ dukkhaṁ.",
  "cp31:10.1_0": "Tyāhaṁ assāsayitvāna,",
  "cp31:10.2_0": "dukkhite sokasallite;",
  "cp31:10.3_0": "Paṭhamaṁ akāsiṁ kiriyaṁ,",
  "cp31:10.4_0": "aggaṁ saccaṁ varuttamaṁ.",
  "cp31:11.1_0": "‘Sattāhamevāhaṁ pasannacitto,",
  "cp31:11.2_0": "Puññatthiko acariṁ brahmacariyaṁ;",
  "cp31:11.3_0": "Athāparaṁ yaṁ caritaṁ mamedaṁ,",
  "cp31:11.4_0": "Vassāni paññāsasamādhikāni.",
  "cp31:12.1_0": "Akāmako vāhi ahaṁ carāmi,",
  "cp31:12.2_0": "Etena saccena suvatthi hotu;",
  "cp31:12.3_0": "Hataṁ visaṁ jīvatu yaññadatto’.",
  "cp31:13.1_0": "Saha sacce kate mayhaṁ,",
  "cp31:13.2_0": "visavegena vedhito;",
  "cp31:13.3_0": "Abujjhitvāna vuṭṭhāsi,",
  "cp31:13.4_0": "arogo cāsi māṇavo;",
  "cp31:13.5_0": "Saccena me samo natthi,",
  "cp31:13.6_0": "esā me saccapāramī”ti.",
  "cp31:14.1_0": "Kaṇhadīpāyanacariyaṁ ekādasamaṁ."
}