{
  "iti18:0.1_0": "Itivuttaka 18",
  "iti18:0.2_0": "Ekakanipāta",
  "iti18:0.3_0": "Dutiyavagga",
  "iti18:0.4_0": "Saṅghabhedasutta",
  "iti18:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti18:2.1_0": "“Ekadhammo,",
  "iti18:2.1_1": "bhikkhave,",
  "iti18:2.1_2": "loke uppajjamāno uppajjati bahujanāhitāya bahujanāsukhāya bahuno janassa anatthāya ahitāya dukkhāya devamanussānaṁ.",
  "iti18:2.2_0": "Katamo ekadhammo?",
  "iti18:2.3_0": "Saṅghabhedo.",
  "iti18:2.4_0": "Saṅghe kho pana,",
  "iti18:2.4_1": "bhikkhave,",
  "iti18:2.4_2": "bhinne aññamaññaṁ bhaṇḍanāni ceva honti,",
  "iti18:2.4_3": "aññamaññaṁ paribhāsā ca honti,",
  "iti18:2.4_4": "aññamaññaṁ parikkhepā ca honti,",
  "iti18:2.4_5": "aññamaññaṁ pariccajanā ca honti.",
  "iti18:2.5_0": "Tattha appasannā ceva nappasīdanti, pasannānañca ekaccānaṁ aññathattaṁ hotī”ti.",
  "iti18:2.6_0": "Etamatthaṁ bhagavā avoca.",
  "iti18:2.7_0": "Tatthetaṁ iti vuccati:",
  "iti18:3.1_0": "“Āpāyiko nerayiko,",
  "iti18:3.2_0": "Kappaṭṭho saṅghabhedako;",
  "iti18:3.3_0": "Vaggārāmo adhammaṭṭho,",
  "iti18:3.4_0": "Yogakkhemā padhaṁsati;",
  "iti18:3.5_0": "Saṅghaṁ samaggaṁ bhetvāna,",
  "iti18:3.6_0": "Kappaṁ nirayamhi paccatī”ti.",
  "iti18:4.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti18:4.2_0": "Aṭṭhamaṁ."
}