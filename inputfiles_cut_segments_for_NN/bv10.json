{
  "bv10:0.1_0": "Buddhavaṁsa",
  "bv10:0.2_0": "10. Padumabuddhavaṁsa",
  "bv10:1.1_0": "“Anomadassissa aparena,",
  "bv10:1.2_0": "Sambuddho dvipaduttamo;",
  "bv10:1.3_0": "Padumo nāma nāmena,",
  "bv10:1.4_0": "Asamo appaṭipuggalo.",
  "bv10:2.1_0": "Tassāpi asamaṁ sīlaṁ,",
  "bv10:2.2_0": "samādhipi anantako;",
  "bv10:2.3_0": "Asaṅkheyyaṁ ñāṇavaraṁ,",
  "bv10:2.4_0": "vimuttipi anūpamā.",
  "bv10:3.1_0": "Tassāpi atulatejassa,",
  "bv10:3.2_0": "dhammacakkappavattane;",
  "bv10:3.3_0": "Abhisamayā tayo āsuṁ,",
  "bv10:3.4_0": "mahātamapavāhanā.",
  "bv10:4.1_0": "Paṭhamābhisamaye buddho,",
  "bv10:4.2_0": "koṭisatamabodhayi;",
  "bv10:4.3_0": "Dutiyābhisamaye dhīro,",
  "bv10:4.4_0": "navutikoṭimabodhayi.",
  "bv10:5.1_0": "Yadā ca padumo buddho,",
  "bv10:5.2_0": "ovadī sakamatrajaṁ;",
  "bv10:5.3_0": "Tadā asītikoṭīnaṁ,",
  "bv10:5.4_0": "tatiyābhisamayo ahu.",
  "bv10:6.1_0": "Sannipātā tayo āsuṁ,",
  "bv10:6.2_0": "padumassa mahesino;",
  "bv10:6.3_0": "Koṭisatasahassānaṁ,",
  "bv10:6.4_0": "paṭhamo āsi samāgamo.",
  "bv10:7.1_0": "Kathinatthārasamaye,",
  "bv10:7.2_0": "uppanne kathinacīvare;",
  "bv10:7.3_0": "Dhammasenāpatitthāya,",
  "bv10:7.4_0": "bhikkhū sibbiṁsu cīvaraṁ.",
  "bv10:8.1_0": "Tadā te vimalā bhikkhū,",
  "bv10:8.2_0": "chaḷabhiññā mahiddhikā;",
  "bv10:8.3_0": "Tīṇi satasahassāni,",
  "bv10:8.4_0": "samiṁsu aparājitā.",
  "bv10:9.1_0": "Punāparaṁ so narāsabho,",
  "bv10:9.2_0": "pavane vāsaṁ upāgami;",
  "bv10:9.3_0": "Tadā samāgamo āsi,",
  "bv10:9.4_0": "dvinnaṁ satasahassinaṁ.",
  "bv10:10.1_0": "Ahaṁ tena samayena,",
  "bv10:10.2_0": "sīho āsiṁ migādhibhū;",
  "bv10:10.3_0": "Vivekamanubrūhantaṁ,",
  "bv10:10.4_0": "pavane addasaṁ jinaṁ.",
  "bv10:11.1_0": "Vanditvā sirasā pāde,",
  "bv10:11.2_0": "katvāna taṁ padakkhiṇaṁ;",
  "bv10:11.3_0": "Tikkhattuṁ abhināditvā,",
  "bv10:11.4_0": "sattāhaṁ jinamupaṭṭhahaṁ.",
  "bv10:12.1_0": "Sattāhaṁ varasamāpattiyā,",
  "bv10:12.2_0": "Vuṭṭhahitvā tathāgato;",
  "bv10:12.3_0": "Manasā cintayitvāna,",
  "bv10:12.4_0": "Koṭibhikkhū samānayi.",
  "bv10:13.1_0": "Tadāpi so mahāvīro,",
  "bv10:13.2_0": "tesaṁ majjhe viyākari;",
  "bv10:13.3_0": "‘Aparimeyyito kappe,",
  "bv10:13.4_0": "ayaṁ buddho bhavissati.",
  "bv10:14.1_0": "Padhānaṁ padahitvāna,",
  "bv10:14.2_0": "…pe…",
  "bv10:14.3_0": "hessāma sammukhā imaṁ’.",
  "bv10:15.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv10:15.2_0": "bhiyyo cittaṁ pasādayiṁ;",
  "bv10:15.3_0": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv10:15.4_0": "dasapāramipūriyā.",
  "bv10:16.1_0": "Campakaṁ nāma nagaraṁ,",
  "bv10:16.2_0": "asamo nāma khattiyo;",
  "bv10:16.3_0": "Asamā nāma janikā,",
  "bv10:16.4_0": "padumassa mahesino.",
  "bv10:17.1_0": "Dasavassasahassāni,",
  "bv10:17.2_0": "agāraṁ ajjha so vasi;",
  "bv10:17.3_0": "Nandā-vasu-yasuttarā,",
  "bv10:17.4_0": "tayo pāsādamuttamā.",
  "bv10:18.1_0": "Tettiṁsa ca sahassāni,",
  "bv10:18.2_0": "nāriyo samalaṅkatā;",
  "bv10:18.3_0": "Uttarā nāma sā nārī,",
  "bv10:18.4_0": "rammo nāmāsi atrajo.",
  "bv10:19.1_0": "Nimitte caturo disvā,",
  "bv10:19.2_0": "rathayānena nikkhami;",
  "bv10:19.3_0": "Anūnaaṭṭhamāsāni,",
  "bv10:19.4_0": "padhānaṁ padahī jino.",
  "bv10:20.1_0": "Brahmunā yācito santo,",
  "bv10:20.2_0": "padumo lokanāyako;",
  "bv10:20.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv10:20.4_0": "dhanañcuyyānamuttame.",
  "bv10:21.1_0": "Sālo ca upasālo ca,",
  "bv10:21.2_0": "ahesuṁ aggasāvakā;",
  "bv10:21.3_0": "Varuṇo nāmupaṭṭhāko,",
  "bv10:21.4_0": "padumassa mahesino.",
  "bv10:22.1_0": "Rādhā ceva surādhā ca,",
  "bv10:22.2_0": "ahesuṁ aggasāvikā;",
  "bv10:22.3_0": "Bodhi tassa bhagavato,",
  "bv10:22.4_0": "mahāsoṇoti vuccati.",
  "bv10:23.1_0": "Bhiyyo ceva asamo ca,",
  "bv10:23.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv10:23.3_0": "Rucī ca nandarāmā ca,",
  "bv10:23.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv10:24.1_0": "Aṭṭhapaṇṇāsaratanaṁ,",
  "bv10:24.2_0": "accuggato mahāmuni;",
  "bv10:24.3_0": "Pabhā niddhāvatī tassa,",
  "bv10:24.4_0": "asamā sabbaso disā.",
  "bv10:25.1_0": "Candappabhā sūriyappabhā,",
  "bv10:25.2_0": "ratanaggimaṇippabhā;",
  "bv10:25.3_0": "Sabbāpi tā hatā honti,",
  "bv10:25.4_0": "patvā jinapabhuttamaṁ.",
  "bv10:26.1_0": "Vassasatasahassāni,",
  "bv10:26.2_0": "āyu vijjati tāvade;",
  "bv10:26.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv10:26.4_0": "tāresi janataṁ bahuṁ.",
  "bv10:27.1_0": "Paripakkamānase satte,",
  "bv10:27.2_0": "bodhayitvā asesato;",
  "bv10:27.3_0": "Sesake anusāsitvā,",
  "bv10:27.4_0": "nibbuto so sasāvako.",
  "bv10:28.1_0": "Uragova tacaṁ jiṇṇaṁ,",
  "bv10:28.2_0": "vaddhapattaṁva pādapo;",
  "bv10:28.3_0": "Jahitvā sabbasaṅkhāre,",
  "bv10:28.4_0": "nibbuto so yathā sikhī.",
  "bv10:29.1_0": "Padumo jinavaro satthā,",
  "bv10:29.2_0": "Dhammārāmamhi nibbuto;",
  "bv10:29.3_0": "Dhātuvitthārikaṁ āsi,",
  "bv10:29.4_0": "Tesu tesu padesato”ti. ",
  "bv10:30.1_0": "Padumassa bhagavato vaṁso aṭṭhamo."
}