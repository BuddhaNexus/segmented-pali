{
  "mil7.8.3:0.1_0": "Milindapañha",
  "mil7.8.3:0.2_0": "Opammakathāpañha",
  "mil7.8.3:0.3_0": "Kumbhavagga",
  "mil7.8.3:0.4_0": "3. Chattaṅgapañha",
  "mil7.8.3:1.1_0": "“Bhante nāgasena,",
  "mil7.8.3:1.1_1": "‘chattassa tīṇi aṅgāni gahetabbānī’ti yaṁ vadesi,",
  "mil7.8.3:1.1_2": "katamāni tāni tīṇi aṅgāni gahetabbānī”ti?",
  "mil7.8.3:1.2_0": "“Yathā, mahārāja, chattaṁ upari muddhani carati;",
  "mil7.8.3:1.3_0": "evameva kho, mahārāja,",
  "mil7.8.3:1.3_1": "yoginā yogāvacarena kilesānaṁ upari muddhani carena bhavitabbaṁ.",
  "mil7.8.3:1.4_0": "Idaṁ, mahārāja,",
  "mil7.8.3:1.4_1": "chattassa paṭhamaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.8.3:2.1_0": "Puna caparaṁ, mahārāja,",
  "mil7.8.3:2.1_1": "chattaṁ muddhanupatthambhaṁ hoti;",
  "mil7.8.3:2.2_0": "evameva kho, mahārāja,",
  "mil7.8.3:2.2_1": "yoginā yogāvacarena yoniso manasikārupatthambhena bhavitabbaṁ.",
  "mil7.8.3:2.3_0": "Idaṁ, mahārāja,",
  "mil7.8.3:2.3_1": "chattassa dutiyaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.8.3:3.1_0": "Puna caparaṁ, mahārāja,",
  "mil7.8.3:3.1_1": "chattaṁ vātātapameghavuṭṭhiyo paṭihanati;",
  "mil7.8.3:3.2_0": "evameva kho, mahārāja,",
  "mil7.8.3:3.2_1": "yoginā yogāvacarena nānāvidhadiṭṭhiputhusamaṇabrāhmaṇānaṁ matavāta-tividhaggisantāpakilesavuṭṭhiyo paṭihantabbā.",
  "mil7.8.3:3.3_0": "Idaṁ, mahārāja,",
  "mil7.8.3:3.3_1": "chattassa tatiyaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.8.3:3.4_0": "Bhāsitampetaṁ, mahārāja,",
  "mil7.8.3:3.4_1": "therena sāriputtena dhammasenāpatinā—",
  "mil7.8.3:4.1_0": "‘Yathāpi chattaṁ vipulaṁ,",
  "mil7.8.3:4.2_0": "acchiddaṁ thirasaṁhitaṁ;",
  "mil7.8.3:4.3_0": "Vātātapaṁ nivāreti,",
  "mil7.8.3:4.4_0": "mahatī meghavuṭṭhiyo.",
  "mil7.8.3:5.1_0": "Tatheva buddhaputtopi,",
  "mil7.8.3:5.2_0": "sīlachattadharo suci;",
  "mil7.8.3:5.3_0": "Kilesavuṭṭhiṁ vāreti,",
  "mil7.8.3:5.4_0": "santāpatividhaggayo’”ti.",
  "mil7.8.3:6.1_0": "Chattaṅgapañho tatiyo."
}