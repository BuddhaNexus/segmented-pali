{
  "vv82:0.1_0": "Vimānavatthu",
  "vv82:0.2_0": "Purisavimāna",
  "vv82:0.3_0": "Sunikkhittavagga",
  "vv82:0.4_0": "8. Anekavaṇṇavimānavatthu",
  "vv82:1.1_0": "“Anekavaṇṇaṁ darasokanāsanaṁ,",
  "vv82:1.2_0": "Vimānamāruyha anekacittaṁ;",
  "vv82:1.3_0": "Parivārito accharāsaṅgaṇena,",
  "vv82:1.4_0": "Sunimmito bhūtapatīva modasi.",
  "vv82:2.1_0": "Samassamo natthi kuto panuttaro,",
  "vv82:2.2_0": "Yasena puññena ca iddhiyā ca;",
  "vv82:2.3_0": "Sabbe ca devā tidasagaṇā samecca,",
  "vv82:2.4_0": "Taṁ taṁ namassanti sasiṁva devā;",
  "vv82:2.5_0": "Imā ca te accharāyo samantato,",
  "vv82:2.6_0": "Naccanti gāyanti pamodayanti.",
  "vv82:3.1_0": "Deviddhipattosi mahānubhāvo,",
  "vv82:3.2_0": "Manussabhūto kimakāsi puññaṁ;",
  "vv82:3.3_0": "Kenāsi evaṁ jalitānubhāvo,",
  "vv82:3.4_0": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv82:4.1_0": "So devaputto attamano,",
  "vv82:4.2_0": "…pe…",
  "vv82:4.3_0": "yassa kammassidaṁ phalaṁ.",
  "vv82:5.1_0": "“Ahaṁ bhadante ahuvāsi pubbe,",
  "vv82:5.2_0": "Sumedhanāmassa jinassa sāvako;",
  "vv82:5.3_0": "Puthujjano ananubodhohamasmi,",
  "vv82:5.4_0": "So satta vassāni paribbajissahaṁ.",
  "vv82:6.1_0": "Sohaṁ sumedhassa jinassa satthuno,",
  "vv82:6.2_0": "Parinibbutassoghatiṇṇassa tādino;",
  "vv82:6.3_0": "Ratanuccayaṁ hemajālena channaṁ,",
  "vv82:6.4_0": "Vanditvā thūpasmiṁ manaṁ pasādayiṁ.",
  "vv82:7.1_0": "Na māsi dānaṁ na ca matthi dātuṁ,",
  "vv82:7.2_0": "Pare ca kho tattha samādapesiṁ;",
  "vv82:7.3_0": "Pūjetha naṁ pūjanīyassa dhātuṁ,",
  "vv82:7.4_0": "Evaṁ kira saggamito gamissatha.",
  "vv82:8.1_0": "Tadeva kammaṁ kusalaṁ kataṁ mayā,",
  "vv82:8.2_0": "Sukhañca dibbaṁ anubhomi attanā;",
  "vv82:8.3_0": "Modāmahaṁ tidasagaṇassa majjhe,",
  "vv82:8.4_0": "Na tassa puññassa khayampi ajjhagan”ti.",
  "vv82:9.1_0": "Anekavaṇṇavimānaṁ aṭṭhamaṁ."
}