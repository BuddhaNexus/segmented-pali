{
  "atk-abh03a16:0_0": "9. Hevatthikathāvaṇṇanā",
  "atk-abh03a16:1_0": "304.",
  "atk-abh03a16:1_1": "Idāni hevatthikathā nāma hoti.",
  "atk-abh03a16:1_2": "Tattha yesaṁ “sabbepi atītādibhedā dhammā rūpādivasena atthi,",
  "atk-abh03a16:1_3": "atītaṁ anāgatapaccuppannavasena,",
  "atk-abh03a16:1_4": "anāgatapaccuppannāni vā atītādivasena natthi;",
  "atk-abh03a16:1_5": "tasmā sabbamevidaṁ evaṁ atthi evaṁ natthī”ti laddhi,",
  "atk-abh03a16:1_6": "seyyathāpi etarahi vuttappabhedānaṁ andhakānaṁ;",
  "atk-abh03a16:1_7": "te sandhāya atītaṁ atthīti pucchā sakavādissa.",
  "atk-abh03a16:1_8": "Hevatthi heva natthīti vissajjanaṁ paravādissa.",
  "atk-abh03a16:1_9": "Tattha hevāti evaṁ.",
  "atk-abh03a16:1_10": "Atha naṁ sakavādī “yadi atītova evaṁ atthi,",
  "atk-abh03a16:1_11": "evaṁ natthīti laddhi,",
  "atk-abh03a16:1_12": "evaṁ sante soyeva atthi,",
  "atk-abh03a16:1_13": "soyeva natthi nāmā”ti pucchanto sevatthi,",
  "atk-abh03a16:1_14": "seva natthīti āha.",
  "atk-abh03a16:1_15": "Itaro teneva sabhāvena atthitaṁ,",
  "atk-abh03a16:1_16": "teneva natthitaṁ sandhāya paṭikkhipati.",
  "atk-abh03a16:1_17": "Dutiyaṁ puṭṭho sakabhāveneva atthitaṁ,",
  "atk-abh03a16:1_18": "parabhāveneva natthitaṁ sandhāya paṭijānāti.",
  "atk-abh03a16:1_19": "Tato paraṁ atthaṭṭho natthaṭṭhoti atthisabhāvo natthisabhāvo nāma hotīti pucchati.",
  "atk-abh03a16:1_20": "Imināvupāyena sabbavāresu attho veditabbo.",
  "atk-abh03a16:1_21": "Pariyosāne pana “tena hi atītaṁ hevatthi,",
  "atk-abh03a16:1_22": "heva natthī”ti ca “tena hi rūpaṁ hevatthi,",
  "atk-abh03a16:1_23": "heva natthī”ti cātiādīni vatvā kiñcāpi paravādinā laddhi patiṭṭhāpitā,",
  "atk-abh03a16:1_24": "ayoniso patiṭṭhāpitattā panesā appatiṭṭhāpitāyevāti.",
  "atk-abh03a16:2_0": "Hevatthikathāvaṇṇanā.",
  "atk-abh03a16:3_0": "Mahāvaggo niṭṭhito."
}