{
  "kv20.3:0.1_0": "Kathāvatthu",
  "kv20.3:0.2_0": "Mahāpaṇṇāsaka",
  "kv20.3:0.3_0": "Vīsatimavagga",
  "kv20.3:0.4_0": "Nirayapālakathā",
  "kv20.3:1.1_0": "Natthi nirayesu nirayapālāti?",
  "kv20.3:1.2_0": "Āmantā.",
  "kv20.3:1.3_0": "Natthi nirayesu kammakāraṇāti?",
  "kv20.3:1.4_0": "Na hevaṁ vattabbe …pe…",
  "kv20.3:1.5_0": "atthi nirayesu kammakāraṇāti?",
  "kv20.3:1.6_0": "Āmantā.",
  "kv20.3:1.7_0": "Atthi nirayesu nirayapālāti?",
  "kv20.3:1.8_0": "Na hevaṁ vattabbe …pe….",
  "kv20.3:2.1_0": "Atthi manussesu kammakāraṇā, atthi ca kāraṇikāti?",
  "kv20.3:2.2_0": "Āmantā.",
  "kv20.3:2.3_0": "Atthi nirayesu kammakāraṇā, atthi ca kāraṇikāti?",
  "kv20.3:2.4_0": "Na hevaṁ vattabbe …pe…",
  "kv20.3:2.5_0": "atthi nirayesu kammakāraṇā, natthi ca kāraṇikāti?",
  "kv20.3:2.6_0": "Āmantā.",
  "kv20.3:2.7_0": "Atthi manussesu kammakāraṇā, natthi ca kāraṇikāti?",
  "kv20.3:2.8_0": "Na hevaṁ vattabbe …pe….",
  "kv20.3:3.1_0": "Atthi nirayesu nirayapālāti?",
  "kv20.3:3.2_0": "Āmantā.",
  "kv20.3:3.3_0": "Nanu vuttaṁ bhagavatā—",
  "kv20.3:4.1_0": "“Na vessabhū nopi ca pettirājā,",
  "kv20.3:4.2_0": "Somo yamo vessavaṇo ca rājā;",
  "kv20.3:4.3_0": "Sakāni kammāni hananti tattha,",
  "kv20.3:4.4_0": "Ito paṇunnaṁ paralokapattan”ti.",
  "kv20.3:5.1_0": "Attheva suttantoti?",
  "kv20.3:5.2_0": "Āmantā.",
  "kv20.3:5.3_0": "Tena hi natthi nirayesu nirayapālāti.",
  "kv20.3:6.1_0": "Natthi nirayesu nirayapālāti?",
  "kv20.3:6.2_0": "Āmantā.",
  "kv20.3:6.3_0": "Nanu vuttaṁ bhagavatā—",
  "kv20.3:6.4_0": "“tamenaṁ, bhikkhave,",
  "kv20.3:6.4_1": "nirayapālā pañcavidhabandhanaṁ nāma kāraṇaṁ kārenti—",
  "kv20.3:6.5_0": "tattaṁ ayokhīlaṁ hatthe gamenti,",
  "kv20.3:6.5_1": "tattaṁ ayokhīlaṁ dutiye hatthe gamenti,",
  "kv20.3:6.5_2": "tattaṁ ayokhīlaṁ pāde gamenti,",
  "kv20.3:6.5_3": "tattaṁ ayokhīlaṁ dutiye pāde gamenti,",
  "kv20.3:6.5_4": "tattaṁ ayokhīlaṁ majjheurasmiṁ gamenti;",
  "kv20.3:6.6_0": "so tattha dukkhā tibbā kaṭukā vedanā vedeti;",
  "kv20.3:6.7_0": "na ca tāva kālaṁ karoti yāva na taṁ pāpakammaṁ byantī hotī”ti.",
  "kv20.3:6.8_0": "Attheva suttantoti?",
  "kv20.3:6.9_0": "Āmantā.",
  "kv20.3:6.10_0": "Tena hi atthi nirayesu nirayapālāti.",
  "kv20.3:7.1_0": "Natthi nirayesu nirayapālāti?",
  "kv20.3:7.2_0": "Āmantā.",
  "kv20.3:7.3_0": "Nanu vuttaṁ bhagavatā—",
  "kv20.3:7.4_0": "“tamenaṁ, bhikkhave,",
  "kv20.3:7.4_1": "nirayapālā saṁvesetvā kuṭhārīhi tacchanti …pe…",
  "kv20.3:7.5_0": "tamenaṁ, bhikkhave,",
  "kv20.3:7.5_1": "nirayapālā uddhampādaṁ adhosiraṁ ṭhapetvā vāsīhi tacchanti …pe…",
  "kv20.3:7.6_0": "tamenaṁ, bhikkhave,",
  "kv20.3:7.6_1": "nirayapālā rathe yojetvā ādittāya pathaviyā sampajjalitāya sajotibhūtāya sārentipi paccāsārentipi …pe…",
  "kv20.3:7.7_0": "tamenaṁ, bhikkhave,",
  "kv20.3:7.7_1": "nirayapālā mahantaṁ aṅgārapabbataṁ ādittaṁ sampajjalitaṁ sajotibhūtaṁ āropentipi oropentipi …pe…",
  "kv20.3:7.8_0": "tamenaṁ, bhikkhave,",
  "kv20.3:7.8_1": "nirayapālā uddhampādaṁ adhosiraṁ gahetvā tattāya lohakumbhiyā pakkhipanti ādittāya sampajjalitāya sajotibhūtāya.",
  "kv20.3:7.9_0": "So tattha pheṇuddehakaṁ paccati,",
  "kv20.3:7.9_1": "so tattha pheṇuddehakaṁ paccamāno sakimpi uddhaṁ gacchati, sakimpi adho gacchati, sakimpi tiriyaṁ gacchati.",
  "kv20.3:7.10_0": "So tattha dukkhā tibbā kaṭukā vedanā vedayati,",
  "kv20.3:7.10_1": "na ca tāva kālaṁ karoti yāva na taṁ pāpakammaṁ byantīhoti.",
  "kv20.3:7.11_0": "Tamenaṁ, bhikkhave,",
  "kv20.3:7.11_1": "nirayapālā mahāniraye pakkhipanti.",
  "kv20.3:7.12_0": "So kho pana, bhikkhave, mahānirayo—",
  "kv20.3:8.1_0": "Catukkaṇṇo catudvāro,",
  "kv20.3:8.2_0": "vibhatto bhāgaso mito;",
  "kv20.3:8.3_0": "Ayopākārapariyanto,",
  "kv20.3:8.4_0": "ayasā paṭikujjito.",
  "kv20.3:9.1_0": "Tassa ayomayā bhūmi,",
  "kv20.3:9.2_0": "Jalitā tejasā yutā;",
  "kv20.3:9.3_0": "Samantā yojanasataṁ,",
  "kv20.3:9.4_0": "Pharitvā tiṭṭhati sabbadā”ti.",
  "kv20.3:10.1_0": "Attheva suttantoti?",
  "kv20.3:10.2_0": "Āmantā.",
  "kv20.3:10.3_0": "Tena hi atthi nirayesu nirayapālāti.",
  "kv20.3:10.4_0": "Nirayapālakathā niṭṭhitā."
}