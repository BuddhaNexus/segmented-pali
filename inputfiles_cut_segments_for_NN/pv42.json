{
  "pv42:0.1_0": "Petavatthu",
  "pv42:0.2_0": "Mahāvagga",
  "pv42:0.3_0": "7. Rājaputtapetavatthu",
  "pv42:1.1_0": "Pubbe katānaṁ kammānaṁ,",
  "pv42:1.2_0": "vipāko mathaye manaṁ;",
  "pv42:1.3_0": "Rūpe sadde rase gandhe,",
  "pv42:1.4_0": "phoṭṭhabbe ca manorame.",
  "pv42:2.1_0": "Naccaṁ gītaṁ ratiṁ khiḍḍaṁ,",
  "pv42:2.2_0": "anubhutvā anappakaṁ;",
  "pv42:2.3_0": "Uyyāne paricaritvā,",
  "pv42:2.4_0": "pavisanto giribbajaṁ.",
  "pv42:3.1_0": "Isiṁ sunetta maddakkhi,",
  "pv42:3.2_0": "attadantaṁ samāhitaṁ;",
  "pv42:3.3_0": "Appicchaṁ hirisampannaṁ,",
  "pv42:3.4_0": "uñche pattagate rataṁ.",
  "pv42:4.1_0": "Hatthikkhandhato oruyha,",
  "pv42:4.2_0": "laddhā bhanteti cābravi;",
  "pv42:4.3_0": "Tassa pattaṁ gahetvāna,",
  "pv42:4.4_0": "uccaṁ paggayha khattiyo.",
  "pv42:5.1_0": "Thaṇḍile pattaṁ bhinditvā,",
  "pv42:5.2_0": "hasamāno apakkami;",
  "pv42:5.3_0": "“Rañño kitavassāhaṁ putto,",
  "pv42:5.4_0": "kiṁ maṁ bhikkhu karissasi”.",
  "pv42:6.1_0": "Tassa kammassa pharusassa,",
  "pv42:6.2_0": "vipāko kaṭuko ahu;",
  "pv42:6.3_0": "Yaṁ rājaputto vedesi,",
  "pv42:6.4_0": "nirayamhi samappito.",
  "pv42:7.1_0": "Chaḷeva caturāsīti,",
  "pv42:7.2_0": "vassāni navutāni ca;",
  "pv42:7.3_0": "Bhusaṁ dukkhaṁ nigacchittho,",
  "pv42:7.4_0": "niraye katakibbiso.",
  "pv42:8.1_0": "Uttānopi ca paccittha,",
  "pv42:8.2_0": "nikujjo vāmadakkhiṇo;",
  "pv42:8.3_0": "Uddhampādo ṭhito ceva,",
  "pv42:8.4_0": "ciraṁ bālo apaccatha.",
  "pv42:9.1_0": "Bahūni vassasahassāni,",
  "pv42:9.2_0": "pūgāni nahutāni ca;",
  "pv42:9.3_0": "Bhusaṁ dukkhaṁ nigacchittho,",
  "pv42:9.4_0": "niraye katakibbiso.",
  "pv42:10.1_0": "Etādisaṁ kho kaṭukaṁ,",
  "pv42:10.2_0": "appaduṭṭhappadosinaṁ;",
  "pv42:10.3_0": "Paccanti pāpakammantā,",
  "pv42:10.4_0": "isimāsajja subbataṁ.",
  "pv42:11.1_0": "So tattha bahuvassāni,",
  "pv42:11.2_0": "vedayitvā bahuṁ dukhaṁ;",
  "pv42:11.3_0": "Khuppipāsahato nāma,",
  "pv42:11.4_0": "peto āsi tato cuto.",
  "pv42:12.1_0": "Etamādīnavaṁ ñatvā,",
  "pv42:12.2_0": "issaramadasambhavaṁ;",
  "pv42:12.3_0": "Pahāya issaramadaṁ,",
  "pv42:12.4_0": "nivātamanuvattaye.",
  "pv42:13.1_0": "Diṭṭheva dhamme pāsaṁso,",
  "pv42:13.2_0": "yo buddhesu sagāravo;",
  "pv42:13.3_0": "Kāyassa bhedā sappañño,",
  "pv42:13.4_0": "saggaṁ so upapajjatīti.",
  "pv42:14.1_0": "Rājaputtapetavatthu sattamaṁ."
}