{
  "ne16:0.1_0": "Netti",
  "ne16:0.2_0": "Paṭiniddesavāra",
  "ne16:0.3_0": "Vibhaṅga 13",
  "ne16:0.4_0": "Sodhanahāravibhaṅga",
  "ne16:1.1_0": "Tattha katamo sodhano hāro?",
  "ne16:1.2_0": "“Vissajjitamhi pañhe”ti gāthā.",
  "ne16:1.3_0": "Yathā āyasmā ajito pārāyane bhagavantaṁ pañhaṁ pucchati—",
  "ne16:2.1_0": "“Kenassu nivuto loko,",
  "ne16:2.2_0": "kenassu nappakāsati;",
  "ne16:2.3_0": "Kissābhilepanaṁ brūsi,",
  "ne16:2.4_0": "kiṁsu tassa mahabbhayan”ti.",
  "ne16:3.1_0": "“Avijjāya nivuto loko,",
  "ne16:3.2_0": "(ajitāti bhagavā)",
  "ne16:3.3_0": "Vivicchā pamādā nappakāsati;",
  "ne16:3.4_0": "Jappābhilepanaṁ brūmi,",
  "ne16:3.5_0": "Dukkhamassa mahabbhayan”ti.",
  "ne16:4.1_0": "“Kenassu nivuto loko”ti pañhe “avijjāya nivuto loko”ti bhagavā padaṁ sodheti, no ca ārambhaṁ.",
  "ne16:4.2_0": "“Kenassu nappakāsatī”ti pañhe “vivicchā pamādā nappakāsatī”ti bhagavā padaṁ sodheti, no ca ārambhaṁ.",
  "ne16:4.3_0": "“Kissābhilepanaṁ brūsī”ti pañhe “jappābhilepanaṁ brūmī”ti bhagavā padaṁ sodheti, no ca ārambhaṁ.",
  "ne16:4.4_0": "“Kiṁsu tassa mahabbhayan”ti pañhe “dukkhamassa mahabbhayan”ti suddho ārambho.",
  "ne16:4.5_0": "Tenāha bhagavā “avijjāya nivuto loko”ti.",
  "ne16:5.1_0": "“Savanti sabbadhi sotā,",
  "ne16:5.2_0": "(iccāyasmā ajito)",
  "ne16:5.3_0": "Sotānaṁ kiṁ nivāraṇaṁ;",
  "ne16:5.4_0": "Sotānaṁ saṁvaraṁ brūhi,",
  "ne16:5.5_0": "Kena sotā pidhīyare”ti.",
  "ne16:6.1_0": "“Yāni sotāni lokasmiṁ,",
  "ne16:6.2_0": "(ajitāti bhagavā)",
  "ne16:6.3_0": "Sati tesaṁ nivāraṇaṁ;",
  "ne16:6.4_0": "Sotānaṁ saṁvaraṁ brūmi,",
  "ne16:6.5_0": "Paññāyete pidhīyare”ti.",
  "ne16:7.1_0": "“Savanti sabbadhi sotā,",
  "ne16:7.1_1": "sotānaṁ kiṁ nivāraṇan”ti pañhe “yāni sotāni lokasmiṁ,",
  "ne16:7.1_2": "sati tesaṁ nivāraṇan”ti bhagavā padaṁ sodheti, no ca ārambhaṁ.",
  "ne16:7.2_0": "“Sotānaṁ saṁvaraṁ brūhi,",
  "ne16:7.2_1": "kena sotā pidhīyare”ti pañhe “sotānaṁ saṁvaraṁ brūmi,",
  "ne16:7.2_2": "paññāyete pidhīyare”ti suddho ārambho.",
  "ne16:7.3_0": "Tenāha bhagavā “yāni sotāni lokasmin”ti.",
  "ne16:8.1_0": "“Paññā ceva sati ca,",
  "ne16:8.2_0": "(iccāyasmā ajito)",
  "ne16:8.3_0": "Nāmarūpañca mārisa;",
  "ne16:8.4_0": "Etaṁ me puṭṭho pabrūhi,",
  "ne16:8.5_0": "Katthetaṁ uparujjhatī”ti.",
  "ne16:9.1_0": "Pañhe—",
  "ne16:10.1_0": "“Yametaṁ pañhaṁ apucchi,",
  "ne16:10.2_0": "ajita taṁ vadāmi te;",
  "ne16:10.3_0": "Yattha nāmañca rūpañca,",
  "ne16:10.4_0": "asesaṁ uparujjhati;",
  "ne16:10.5_0": "Viññāṇassa nirodhena,",
  "ne16:10.6_0": "etthetaṁ uparujjhatī”ti.",
  "ne16:11.1_0": "Suddho ārambho.",
  "ne16:11.2_0": "Tenāha bhagavā “yametaṁ pañhaṁ apucchī”ti.",
  "ne16:11.3_0": "Yattha evaṁ suddho ārambho, so pañho visajjito bhavati.",
  "ne16:11.4_0": "Yattha pana ārambho asuddho,",
  "ne16:11.4_1": "na tāva so pañho visajjito bhavati.",
  "ne16:11.5_0": "Tenāha āyasmā mahākaccāyano “vissajjitamhi pañhe”ti.",
  "ne16:11.6_0": "Niyutto sodhano hāro."
}