{
  "snp4.15:0.1_0": "Sutta Nipāta 4.15",
  "snp4.15:0.2_0": "Attadaṇḍasutta",
  "snp4.15:1.1_0": "“Attadaṇḍā bhayaṁ jātaṁ,",
  "snp4.15:1.2_0": "janaṁ passatha medhagaṁ;",
  "snp4.15:1.3_0": "Saṁvegaṁ kittayissāmi,",
  "snp4.15:1.4_0": "yathā saṁvijitaṁ mayā.",
  "snp4.15:2.1_0": "Phandamānaṁ pajaṁ disvā,",
  "snp4.15:2.2_0": "macche appodake yathā;",
  "snp4.15:2.3_0": "Aññamaññehi byāruddhe,",
  "snp4.15:2.4_0": "disvā maṁ bhayamāvisi.",
  "snp4.15:3.1_0": "Samantamasāro loko,",
  "snp4.15:3.2_0": "disā sabbā sameritā;",
  "snp4.15:3.3_0": "Icchaṁ bhavanamattano,",
  "snp4.15:3.4_0": "nāddasāsiṁ anositaṁ.",
  "snp4.15:4.1_0": "Osāne tveva byāruddhe,",
  "snp4.15:4.2_0": "Disvā me aratī ahu;",
  "snp4.15:4.3_0": "Athettha sallamaddakkhiṁ,",
  "snp4.15:4.4_0": "Duddasaṁ hadayanissitaṁ.",
  "snp4.15:5.1_0": "Yena sallena otiṇṇo,",
  "snp4.15:5.2_0": "disā sabbā vidhāvati;",
  "snp4.15:5.3_0": "Tameva sallamabbuyha,",
  "snp4.15:5.4_0": "na dhāvati na sīdati.",
  "snp4.15:6.1_0": "Tattha sikkhānugīyanti,",
  "snp4.15:6.2_0": "yāni loke gadhitāni;",
  "snp4.15:6.3_0": "Na tesu pasuto siyā,",
  "snp4.15:6.4_0": "nibbijjha sabbaso kāme;",
  "snp4.15:6.5_0": "Sikkhe nibbānamattano.",
  "snp4.15:7.1_0": "Sacco siyā appagabbho,",
  "snp4.15:7.2_0": "amāyo rittapesuṇo;",
  "snp4.15:7.3_0": "Akkodhano lobhapāpaṁ,",
  "snp4.15:7.4_0": "vevicchaṁ vitare muni.",
  "snp4.15:8.1_0": "Niddaṁ tandiṁ sahe thīnaṁ,",
  "snp4.15:8.2_0": "pamādena na saṁvase;",
  "snp4.15:8.3_0": "Atimāne na tiṭṭheyya,",
  "snp4.15:8.4_0": "nibbānamanaso naro.",
  "snp4.15:9.1_0": "Mosavajje na nīyetha,",
  "snp4.15:9.2_0": "rūpe snehaṁ na kubbaye;",
  "snp4.15:9.3_0": "Mānañca parijāneyya,",
  "snp4.15:9.4_0": "sāhasā virato care.",
  "snp4.15:10.1_0": "Purāṇaṁ nābhinandeyya,",
  "snp4.15:10.2_0": "Nave khantiṁ na kubbaye;",
  "snp4.15:10.3_0": "Hiyyamāne na soceyya,",
  "snp4.15:10.4_0": "Ākāsaṁ na sito siyā.",
  "snp4.15:11.1_0": "Gedhaṁ brūmi mahoghoti,",
  "snp4.15:11.2_0": "Ājavaṁ brūmi jappanaṁ;",
  "snp4.15:11.3_0": "Ārammaṇaṁ pakappanaṁ,",
  "snp4.15:11.4_0": "Kāmapaṅko duraccayo.",
  "snp4.15:12.1_0": "Saccā avokkamma muni,",
  "snp4.15:12.2_0": "Thale tiṭṭhati brāhmaṇo;",
  "snp4.15:12.3_0": "Sabbaṁ so paṭinissajja,",
  "snp4.15:12.4_0": "Sa ve santoti vuccati.",
  "snp4.15:13.1_0": "Sa ve vidvā sa vedagū,",
  "snp4.15:13.2_0": "Ñatvā dhammaṁ anissito;",
  "snp4.15:13.3_0": "Sammā so loke iriyāno,",
  "snp4.15:13.4_0": "Na pihetīdha kassaci.",
  "snp4.15:14.1_0": "Yodha kāme accatari,",
  "snp4.15:14.2_0": "Saṅgaṁ loke duraccayaṁ;",
  "snp4.15:14.3_0": "Na so socati nājjheti,",
  "snp4.15:14.4_0": "Chinnasoto abandhano.",
  "snp4.15:15.1_0": "Yaṁ pubbe taṁ visosehi,",
  "snp4.15:15.2_0": "Pacchā te māhu kiñcanaṁ;",
  "snp4.15:15.3_0": "Majjhe ce no gahessasi,",
  "snp4.15:15.4_0": "Upasanto carissasi.",
  "snp4.15:16.1_0": "Sabbaso nāmarūpasmiṁ,",
  "snp4.15:16.2_0": "Yassa natthi mamāyitaṁ;",
  "snp4.15:16.3_0": "Asatā ca na socati,",
  "snp4.15:16.4_0": "Sa ve loke na jīyati.",
  "snp4.15:17.1_0": "Yassa natthi idaṁ meti,",
  "snp4.15:17.2_0": "Paresaṁ vāpi kiñcanaṁ;",
  "snp4.15:17.3_0": "Mamattaṁ so asaṁvindaṁ,",
  "snp4.15:17.4_0": "Natthi meti na socati.",
  "snp4.15:18.1_0": "Aniṭṭhurī ananugiddho,",
  "snp4.15:18.2_0": "Anejo sabbadhī samo;",
  "snp4.15:18.3_0": "Tamānisaṁsaṁ pabrūmi,",
  "snp4.15:18.4_0": "Pucchito avikampinaṁ.",
  "snp4.15:19.1_0": "Anejassa vijānato,",
  "snp4.15:19.2_0": "Natthi kāci nisaṅkhati;",
  "snp4.15:19.3_0": "Virato so viyārabbhā,",
  "snp4.15:19.4_0": "Khemaṁ passati sabbadhi.",
  "snp4.15:20.1_0": "Na samesu na omesu,",
  "snp4.15:20.2_0": "Na ussesu vadate muni;",
  "snp4.15:20.3_0": "Santo so vītamaccharo,",
  "snp4.15:20.4_0": "Nādeti na nirassatī”ti.",
  "snp4.15:20.5_0": "Attadaṇḍasuttaṁ pannarasamaṁ."
}