{
  "mil7.3.8:0.1_0": "Milindapañha",
  "mil7.3.8:0.2_0": "Opammakathāpañha",
  "mil7.3.8:0.3_0": "Samuddavagga",
  "mil7.3.8:0.4_0": "8. Niyāmakaṅgapañha",
  "mil7.3.8:1.1_0": "“Bhante nāgasena,",
  "mil7.3.8:1.1_1": "‘niyāmakassa tīṇi aṅgāni gahetabbānī’ti yaṁ vadesi,",
  "mil7.3.8:1.1_2": "katamāni tāni tīṇi aṅgāni gahetabbānī”ti?",
  "mil7.3.8:1.2_0": "“Yathā, mahārāja,",
  "mil7.3.8:1.2_1": "niyāmako rattindivaṁ satataṁ samitaṁ appamatto yattappayatto nāvaṁ sāreti;",
  "mil7.3.8:1.3_0": "evameva kho, mahārāja,",
  "mil7.3.8:1.3_1": "yoginā yogāvacarena cittaṁ niyāmayamānena rattindivaṁ satataṁ samitaṁ appamattena yattappayattena yoniso manasikārena cittaṁ niyāmetabbaṁ.",
  "mil7.3.8:1.4_0": "Idaṁ, mahārāja,",
  "mil7.3.8:1.4_1": "niyāmakassa paṭhamaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.3.8:1.5_0": "Bhāsitampetaṁ, mahārāja,",
  "mil7.3.8:1.5_1": "bhagavatā devātidevena dhammapade—",
  "mil7.3.8:2.1_0": "‘Appamādaratā hotha,",
  "mil7.3.8:2.2_0": "sacittamanurakkhatha;",
  "mil7.3.8:2.3_0": "Duggā uddharathattānaṁ,",
  "mil7.3.8:2.4_0": "paṅke sannova kuñjaro’ti.",
  "mil7.3.8:3.1_0": "Puna caparaṁ, mahārāja,",
  "mil7.3.8:3.1_1": "niyāmakassa yaṁ kiñci mahāsamudde kalyāṇaṁ vā pāpakaṁ vā, sabbaṁ taṁ viditaṁ hoti;",
  "mil7.3.8:3.2_0": "evameva kho, mahārāja,",
  "mil7.3.8:3.2_1": "yoginā yogāvacarena kusalākusalaṁ sāvajjānavajjaṁ hīnappaṇītaṁ kaṇhasukkasappaṭibhāgaṁ vijānitabbaṁ.",
  "mil7.3.8:3.3_0": "Idaṁ, mahārāja,",
  "mil7.3.8:3.3_1": "niyāmakassa dutiyaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.3.8:4.1_0": "Puna caparaṁ, mahārāja,",
  "mil7.3.8:4.1_1": "niyāmako yante muddikaṁ deti ‘mā koci yantaṁ āmasitthā’ti;",
  "mil7.3.8:4.2_0": "evameva kho, mahārāja,",
  "mil7.3.8:4.2_1": "yoginā yogāvacarena citte saṁvaramuddikā dātabbā ‘mā kiñci pāpakaṁ akusalavitakkaṁ vitakkesī’ti, idaṁ, mahārāja,",
  "mil7.3.8:4.2_2": "niyāmakassa tatiyaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.3.8:4.3_0": "Bhāsitampetaṁ, mahārāja,",
  "mil7.3.8:4.3_1": "bhagavatā devātidevena saṁyuttanikāyavare—",
  "mil7.3.8:4.4_0": "‘mā, bhikkhave,",
  "mil7.3.8:4.4_1": "pāpake akusale vitakke vitakkeyyātha, seyyathidaṁ—",
  "mil7.3.8:4.5_0": "kāmavitakkaṁ byāpādavitakkaṁ vihiṁsāvitakkan’”ti.",
  "mil7.3.8:5.1_0": "Niyāmakaṅgapañho aṭṭhamo."
}