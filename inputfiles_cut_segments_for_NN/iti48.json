{
  "iti48:0.1_0": "Itivuttaka 48",
  "iti48:0.2_0": "Dukanipāta",
  "iti48:0.3_0": "Dutiyavagga",
  "iti48:0.4_0": "Āpāyikasutta",
  "iti48:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti48:2.1_0": "“Dveme, bhikkhave, āpāyikā nerayikā idamappahāya.",
  "iti48:2.2_0": "Katame dve?",
  "iti48:2.3_0": "Yo ca abrahmacārī brahmacāripaṭiñño,",
  "iti48:2.3_1": "yo ca paripuṇṇaṁ parisuddhaṁ brahmacariyaṁ carantaṁ amūlakena abrahmacariyena anuddhaṁseti.",
  "iti48:2.4_0": "Ime kho, bhikkhave, dve āpāyikā nerayikā idamappahāyā”ti.",
  "iti48:2.5_0": "Etamatthaṁ bhagavā avoca.",
  "iti48:2.6_0": "Tatthetaṁ iti vuccati:",
  "iti48:3.1_0": "“Abhūtavādī nirayaṁ upeti,",
  "iti48:3.2_0": "Yo vāpi katvā na karomi cāha;",
  "iti48:3.3_0": "Ubhopi te pecca samā bhavanti,",
  "iti48:3.4_0": "Nihīnakammā manujā parattha.",
  "iti48:4.1_0": "Kāsāvakaṇṭhā bahavo,",
  "iti48:4.2_0": "pāpadhammā asaññatā;",
  "iti48:4.3_0": "Pāpā pāpehi kammehi,",
  "iti48:4.4_0": "nirayaṁ te upapajjare.",
  "iti48:5.1_0": "Seyyo ayoguḷo bhutto,",
  "iti48:5.2_0": "tatto aggisikhūpamo;",
  "iti48:5.3_0": "Yañce bhuñjeyya dussīlo,",
  "iti48:5.4_0": "raṭṭhapiṇḍamasaññato”ti.",
  "iti48:6.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti48:6.2_0": "Ekādasamaṁ."
}