{
  "pv6:0.1_0": "Petavatthu",
  "pv6:0.2_0": "Uragavagga",
  "pv6:0.3_0": "6. Pañcaputtakhādapetivatthu",
  "pv6:1.1_0": "“Naggā dubbaṇṇarūpāsi,",
  "pv6:1.2_0": "duggandhā pūti vāyasi;",
  "pv6:1.3_0": "Makkhikāhi parikiṇṇā,",
  "pv6:1.4_0": "kā nu tvaṁ idha tiṭṭhasī”ti.",
  "pv6:2.1_0": "“Ahaṁ bhadante petīmhi,",
  "pv6:2.2_0": "duggatā yamalokikā;",
  "pv6:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv6:2.4_0": "petalokaṁ ito gatā.",
  "pv6:3.1_0": "Kālena pañca puttāni,",
  "pv6:3.2_0": "sāyaṁ pañca punāpare;",
  "pv6:3.3_0": "Vijāyitvāna khādāmi,",
  "pv6:3.4_0": "tepi nā honti me alaṁ.",
  "pv6:4.1_0": "Pariḍayhati dhūmāyati,",
  "pv6:4.2_0": "khudāya hadayaṁ mama;",
  "pv6:4.3_0": "Pānīyaṁ na labhe pātuṁ,",
  "pv6:4.4_0": "passa maṁ byasanaṁ gatan”ti.",
  "pv6:5.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv6:5.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv6:5.3_0": "Kissa kammavipākena,",
  "pv6:5.4_0": "puttamaṁsāni khādasī”ti.",
  "pv6:6.1_0": "“Sapatī me gabbhinī āsi,",
  "pv6:6.2_0": "tassā pāpaṁ acetayiṁ;",
  "pv6:6.3_0": "Sāhaṁ paduṭṭhamanasā,",
  "pv6:6.4_0": "akariṁ gabbhapātanaṁ.",
  "pv6:7.1_0": "Tassā dvemāsiko gabbho,",
  "pv6:7.2_0": "lohitaññeva pagghari;",
  "pv6:7.3_0": "Tadassā mātā kupitā,",
  "pv6:7.4_0": "mayhaṁ ñātī samānayi;",
  "pv6:7.5_0": "Sapathañca maṁ kāresi,",
  "pv6:7.6_0": "paribhāsāpayī ca maṁ.",
  "pv6:8.1_0": "Sāhaṁ ghorañca sapathaṁ,",
  "pv6:8.2_0": "musāvādaṁ abhāsisaṁ;",
  "pv6:8.3_0": "Puttamaṁsāni khādāmi,",
  "pv6:8.4_0": "sace taṁ pakataṁ mayā.",
  "pv6:9.1_0": "Tassa kammassa vipākena,",
  "pv6:9.2_0": "musāvādassa cūbhayaṁ;",
  "pv6:9.3_0": "Puttamaṁsāni khādāmi,",
  "pv6:9.4_0": "pubbalohitamakkhitā”ti.",
  "pv6:10.1_0": "Pañcaputtakhādapetivatthu chaṭṭhaṁ."
}