{
  "pv17:0.1_0": "Petavatthu",
  "pv17:0.2_0": "Ubbarivagga",
  "pv17:0.3_0": "5. Maṭṭhakuṇḍalīpetavatthu",
  "pv17:1.1_0": "“Alaṅkato maṭṭhakuṇḍalī,",
  "pv17:1.2_0": "Māladhārī haricandanussado;",
  "pv17:1.3_0": "Bāhā paggayha kandasi,",
  "pv17:1.4_0": "Vanamajjhe kiṁ dukkhito tuvan”ti.",
  "pv17:2.1_0": "“Sovaṇṇamayo pabhassaro,",
  "pv17:2.2_0": "Uppanno rathapañjaro mama;",
  "pv17:2.3_0": "Tassa cakkayugaṁ na vindāmi,",
  "pv17:2.4_0": "Tena dukkhena jahāmi jīvitan”ti.",
  "pv17:3.1_0": "“Sovaṇṇamayaṁ maṇimayaṁ,",
  "pv17:3.2_0": "Lohitakamayaṁ atha rūpiyamayaṁ;",
  "pv17:3.3_0": "Ācikkha me bhaddamāṇava,",
  "pv17:3.4_0": "Cakkayugaṁ paṭipādayāmi te”ti.",
  "pv17:4.1_0": "So māṇavo tassa pāvadi,",
  "pv17:4.2_0": "“Candasūriyā ubhayettha dissare;",
  "pv17:4.3_0": "Sovaṇṇamayo ratho mama,",
  "pv17:4.4_0": "Tena cakkayugena sobhatī”ti.",
  "pv17:5.1_0": "“Bālo kho tvaṁ asi māṇava,",
  "pv17:5.2_0": "Yo tvaṁ patthayase apatthiyaṁ;",
  "pv17:5.3_0": "Maññāmi tuvaṁ marissasi,",
  "pv17:5.4_0": "Na hi tvaṁ lacchasi candasūriye”ti.",
  "pv17:6.1_0": "“Gamanāgamanampi dissati,",
  "pv17:6.2_0": "Vaṇṇadhātu ubhayattha vīthiyā;",
  "pv17:6.3_0": "Peto kālakato na dissati,",
  "pv17:6.4_0": "Ko nidha kandataṁ bālyataro”ti.",
  "pv17:7.1_0": "“Saccaṁ kho vadesi māṇava,",
  "pv17:7.2_0": "Ahameva kandataṁ bālyataro;",
  "pv17:7.3_0": "Candaṁ viya dārako rudaṁ,",
  "pv17:7.4_0": "Petaṁ kālakatābhipatthayinti.",
  "pv17:8.1_0": "Ādittaṁ vata maṁ santaṁ,",
  "pv17:8.2_0": "ghatasittaṁva pāvakaṁ;",
  "pv17:8.3_0": "Vārinā viya osiñcaṁ,",
  "pv17:8.4_0": "sabbaṁ nibbāpaye daraṁ.",
  "pv17:9.1_0": "Abbahī vata me sallaṁ,",
  "pv17:9.2_0": "sokaṁ hadayanissitaṁ;",
  "pv17:9.3_0": "Yo me sokaparetassa,",
  "pv17:9.4_0": "puttasokaṁ apānudi.",
  "pv17:10.1_0": "Svāhaṁ abbūḷhasallosmi,",
  "pv17:10.2_0": "sītibhūtosmi nibbuto;",
  "pv17:10.3_0": "Na socāmi na rodāmi,",
  "pv17:10.4_0": "tava sutvāna māṇavā”ti.",
  "pv17:11.1_0": "“Devatā nusi gandhabbo,",
  "pv17:11.2_0": "adu sakko purindado;",
  "pv17:11.3_0": "Ko vā tvaṁ kassa vā putto,",
  "pv17:11.4_0": "kathaṁ jānemu taṁ mayan”ti.",
  "pv17:12.1_0": "“Yañca kandasi yañca rodasi,",
  "pv17:12.2_0": "Puttaṁ āḷāhane sayaṁ dahitvā;",
  "pv17:12.3_0": "Svāhaṁ kusalaṁ karitvā kammaṁ,",
  "pv17:12.4_0": "Tidasānaṁ sahabyataṁ gato”ti.",
  "pv17:13.1_0": "“Appaṁ vā bahuṁ vā nāddasāma,",
  "pv17:13.2_0": "Dānaṁ dadantassa sake agāre;",
  "pv17:13.3_0": "Uposathakammaṁ vā tādisaṁ,",
  "pv17:13.4_0": "Kena kammena gatosi devalokan”ti.",
  "pv17:14.1_0": "“Ābādhikohaṁ dukkhito gilāno,",
  "pv17:14.2_0": "Āturarūpomhi sake nivesane;",
  "pv17:14.3_0": "Buddhaṁ vigatarajaṁ vitiṇṇakaṅkhaṁ,",
  "pv17:14.4_0": "Addakkhiṁ sugataṁ anomapaññaṁ.",
  "pv17:15.1_0": "Svāhaṁ muditamano pasannacitto,",
  "pv17:15.2_0": "Añjaliṁ akariṁ tathāgatassa;",
  "pv17:15.3_0": "Tāhaṁ kusalaṁ karitvāna kammaṁ,",
  "pv17:15.4_0": "Tidasānaṁ sahabyataṁ gato”ti.",
  "pv17:16.1_0": "“Acchariyaṁ vata abbhutaṁ vata,",
  "pv17:16.2_0": "Añjalikammassa ayamīdiso vipāko;",
  "pv17:16.3_0": "Ahampi muditamano pasannacitto,",
  "pv17:16.4_0": "Ajjeva buddhaṁ saraṇaṁ vajāmī”ti.",
  "pv17:17.1_0": "“Ajjeva buddhaṁ saraṇaṁ vajāhi,",
  "pv17:17.2_0": "Dhammañca saṅghañca pasannacitto;",
  "pv17:17.3_0": "Tatheva sikkhāya padāni pañca,",
  "pv17:17.4_0": "Akhaṇḍaphullāni samādiyassu.",
  "pv17:18.1_0": "Pāṇātipātā viramassu khippaṁ,",
  "pv17:18.2_0": "Loke adinnaṁ parivajjayassu;",
  "pv17:18.3_0": "Amajjapo mā ca musā bhaṇāhi,",
  "pv17:18.4_0": "Sakena dārena ca hohi tuṭṭho”ti.",
  "pv17:19.1_0": "“Atthakāmosi me yakkha,",
  "pv17:19.2_0": "hitakāmosi devate;",
  "pv17:19.3_0": "Karomi tuyhaṁ vacanaṁ,",
  "pv17:19.4_0": "tvaṁsi ācariyo mamāti.",
  "pv17:20.1_0": "Upemi saraṇaṁ buddhaṁ,",
  "pv17:20.2_0": "dhammañcāpi anuttaraṁ;",
  "pv17:20.3_0": "Saṅghañca naradevassa,",
  "pv17:20.4_0": "gacchāmi saraṇaṁ ahaṁ.",
  "pv17:21.1_0": "Pāṇātipātā viramāmi khippaṁ,",
  "pv17:21.2_0": "Loke adinnaṁ parivajjayāmi;",
  "pv17:21.3_0": "Amajjapo no ca musā bhaṇāmi,",
  "pv17:21.4_0": "Sakena dārena ca homi tuṭṭho”ti.",
  "pv17:22.1_0": "Maṭṭhakuṇḍalīpetavatthu pañcamaṁ."
}