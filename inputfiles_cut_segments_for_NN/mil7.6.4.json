{
  "mil7.6.4:0.1_0": "Milindapañha",
  "mil7.6.4:0.2_0": "Opammakathāpañha",
  "mil7.6.4:0.3_0": "Sīhavagga",
  "mil7.6.4:0.4_0": "4. Gharakapotaṅgapañha",
  "mil7.6.4:1.1_0": "“Bhante nāgasena,",
  "mil7.6.4:1.1_1": "‘gharakapotassa ekaṁ aṅgaṁ gahetabban’ti yaṁ vadesi,",
  "mil7.6.4:1.1_2": "katamaṁ taṁ ekaṁ aṅgaṁ gahetabban”ti?",
  "mil7.6.4:1.2_0": "“Yathā, mahārāja,",
  "mil7.6.4:1.2_1": "gharakapoto paragehe vasamāno na tesaṁ kiñci bhaṇḍassa nimittaṁ gaṇhāti, majjhatto vasati saññābahulo;",
  "mil7.6.4:1.3_0": "evameva kho, mahārāja,",
  "mil7.6.4:1.3_1": "yoginā yogāvacarena parakulaṁ upagatena tasmiṁ kule itthīnaṁ vā purisānaṁ vā mañce vā pīṭhe vā vatthe vā alaṅkāre vā upabhoge vā paribhoge vā bhojanavikatīsu vā na nimittaṁ gahetabbaṁ, majjhattena bhavitabbaṁ,",
  "mil7.6.4:1.3_2": "samaṇasaññā paccupaṭṭhapetabbā.",
  "mil7.6.4:1.4_0": "Idaṁ, mahārāja,",
  "mil7.6.4:1.4_1": "gharakapotassa ekaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.6.4:1.5_0": "Bhāsitampetaṁ, mahārāja,",
  "mil7.6.4:1.5_1": "bhagavatā devātidevena cūḷanāradajātake—",
  "mil7.6.4:2.1_0": "‘Pavisitvā parakulaṁ,",
  "mil7.6.4:2.2_0": "pānatthaṁ bhojanāya vā;",
  "mil7.6.4:2.3_0": "Mitaṁ khāde mitaṁ bhuñje,",
  "mil7.6.4:2.4_0": "na ca rūpe manaṁ kare’”ti.",
  "mil7.6.4:3.1_0": "Gharakapotaṅgapañho catuttho."
}