{
  "snp2.7:0.1_0": "Sutta Nipāta 2.7",
  "snp2.7:0.2_0": "Brāhmaṇadhammikasutta",
  "snp2.7:1.1_0": "Evaṁ me sutaṁ—",
  "snp2.7:1.2_0": " ekaṁ samayaṁ bhagavā sāvatthiyaṁ viharati jetavane anāthapiṇḍikassa ārāme.",
  "snp2.7:1.3_0": "Atha kho sambahulā kosalakā brāhmaṇamahāsālā jiṇṇā vuḍḍhā mahallakā addhagatā vayoanuppattā yena bhagavā tenupasaṅkamiṁsu;",
  "snp2.7:1.3_1": "upasaṅkamitvā bhagavatā saddhiṁ sammodiṁsu.",
  "snp2.7:1.4_0": "Sammodanīyaṁ kathaṁ sāraṇīyaṁ vītisāretvā ekamantaṁ nisīdiṁsu.",
  "snp2.7:1.5_0": "Ekamantaṁ nisinnā kho te brāhmaṇamahāsālā bhagavantaṁ etadavocuṁ:",
  "snp2.7:1.6_0": "“sandissanti nu kho, bho gotama,",
  "snp2.7:1.6_1": "etarahi brāhmaṇā porāṇānaṁ brāhmaṇānaṁ brāhmaṇadhamme”ti?",
  "snp2.7:1.7_0": "“Na kho, brāhmaṇā,",
  "snp2.7:1.7_1": "sandissanti etarahi brāhmaṇā porāṇānaṁ brāhmaṇānaṁ brāhmaṇadhamme”ti.",
  "snp2.7:1.8_0": "“Sādhu no bhavaṁ gotamo porāṇānaṁ brāhmaṇānaṁ brāhmaṇadhammaṁ bhāsatu,",
  "snp2.7:1.8_1": "sace bhoto gotamassa agarū”ti.",
  "snp2.7:1.9_0": "“Tena hi, brāhmaṇā, suṇātha, sādhukaṁ manasi karotha, bhāsissāmī”ti.",
  "snp2.7:1.10_0": "“Evaṁ,",
  "snp2.7:1.10_1": "bho”ti kho te brāhmaṇamahāsālā bhagavato paccassosuṁ.",
  "snp2.7:1.11_0": "Bhagavā etadavoca:",
  "snp2.7:2.1_0": "“Isayo pubbakā āsuṁ,",
  "snp2.7:2.2_0": "saññatattā tapassino;",
  "snp2.7:2.3_0": "Pañca kāmaguṇe hitvā,",
  "snp2.7:2.4_0": "attadatthamacārisuṁ.",
  "snp2.7:3.1_0": "Na pasū brāhmaṇānāsuṁ,",
  "snp2.7:3.2_0": "na hiraññaṁ na dhāniyaṁ;",
  "snp2.7:3.3_0": "Sajjhāyadhanadhaññāsuṁ,",
  "snp2.7:3.4_0": "brahmaṁ nidhimapālayuṁ.",
  "snp2.7:4.1_0": "Yaṁ nesaṁ pakataṁ āsi,",
  "snp2.7:4.2_0": "dvārabhattaṁ upaṭṭhitaṁ;",
  "snp2.7:4.3_0": "Saddhāpakatamesānaṁ,",
  "snp2.7:4.4_0": "dātave tadamaññisuṁ.",
  "snp2.7:5.1_0": "Nānārattehi vatthehi,",
  "snp2.7:5.2_0": "sayanehāvasathehi ca;",
  "snp2.7:5.3_0": "Phītā janapadā raṭṭhā,",
  "snp2.7:5.4_0": "te namassiṁsu brāhmaṇe.",
  "snp2.7:6.1_0": "Avajjhā brāhmaṇā āsuṁ,",
  "snp2.7:6.2_0": "ajeyyā dhammarakkhitā;",
  "snp2.7:6.3_0": "Na ne koci nivāresi,",
  "snp2.7:6.4_0": "kuladvāresu sabbaso.",
  "snp2.7:7.1_0": "Aṭṭhacattālīsaṁ vassāni,",
  "snp2.7:7.2_0": "(komāra) Brahmacariyaṁ cariṁsu te;",
  "snp2.7:7.3_0": "Vijjācaraṇapariyeṭṭhiṁ,",
  "snp2.7:7.4_0": "Acaruṁ brāhmaṇā pure.",
  "snp2.7:8.1_0": "Na brāhmaṇā aññamagamuṁ,",
  "snp2.7:8.2_0": "napi bhariyaṁ kiṇiṁsu te;",
  "snp2.7:8.3_0": "Sampiyeneva saṁvāsaṁ,",
  "snp2.7:8.4_0": "saṅgantvā samarocayuṁ.",
  "snp2.7:9.1_0": "Aññatra tamhā samayā,",
  "snp2.7:9.2_0": "utuveramaṇiṁ pati;",
  "snp2.7:9.3_0": "Antarā methunaṁ dhammaṁ,",
  "snp2.7:9.4_0": "nāssu gacchanti brāhmaṇā.",
  "snp2.7:10.1_0": "Brahmacariyañca sīlañca,",
  "snp2.7:10.2_0": "ajjavaṁ maddavaṁ tapaṁ;",
  "snp2.7:10.3_0": "Soraccaṁ avihiṁsañca,",
  "snp2.7:10.4_0": "khantiñcāpi avaṇṇayuṁ.",
  "snp2.7:11.1_0": "Yo nesaṁ paramo āsi,",
  "snp2.7:11.2_0": "Brahmā daḷhaparakkamo;",
  "snp2.7:11.3_0": "Sa vāpi methunaṁ dhammaṁ,",
  "snp2.7:11.4_0": "Supinantepi nāgamā.",
  "snp2.7:12.1_0": "Tassa vattamanusikkhantā,",
  "snp2.7:12.2_0": "Idheke viññujātikā;",
  "snp2.7:12.3_0": "Brahmacariyañca sīlañca,",
  "snp2.7:12.4_0": "Khantiñcāpi avaṇṇayuṁ.",
  "snp2.7:13.1_0": "Taṇḍulaṁ sayanaṁ vatthaṁ,",
  "snp2.7:13.2_0": "Sappitelañca yāciya;",
  "snp2.7:13.3_0": "Dhammena samodhānetvā,",
  "snp2.7:13.4_0": "Tato yaññamakappayuṁ.",
  "snp2.7:14.1_0": "Upaṭṭhitasmiṁ yaññasmiṁ,",
  "snp2.7:14.2_0": "Nāssu gāvo haniṁsu te;",
  "snp2.7:14.3_0": "Yathā mātā pitā bhātā,",
  "snp2.7:14.4_0": "Aññe vāpi ca ñātakā;",
  "snp2.7:14.5_0": "Gāvo no paramā mittā,",
  "snp2.7:14.6_0": "Yāsu jāyanti osadhā.",
  "snp2.7:15.1_0": "Annadā baladā cetā,",
  "snp2.7:15.2_0": "Vaṇṇadā sukhadā tathā;",
  "snp2.7:15.3_0": "Etamatthavasaṁ ñatvā,",
  "snp2.7:15.4_0": "Nāssu gāvo haniṁsu te.",
  "snp2.7:16.1_0": "Sukhumālā mahākāyā,",
  "snp2.7:16.2_0": "Vaṇṇavanto yasassino;",
  "snp2.7:16.3_0": "Brāhmaṇā sehi dhammehi,",
  "snp2.7:16.4_0": "Kiccākiccesu ussukā;",
  "snp2.7:16.5_0": "Yāva loke avattiṁsu,",
  "snp2.7:16.6_0": "Sukhamedhitthayaṁ pajā.",
  "snp2.7:17.1_0": "Tesaṁ āsi vipallāso,",
  "snp2.7:17.2_0": "Disvāna aṇuto aṇuṁ;",
  "snp2.7:17.3_0": "Rājino ca viyākāraṁ,",
  "snp2.7:17.4_0": "Nāriyo samalaṅkatā.",
  "snp2.7:18.1_0": "Rathe cājaññasaṁyutte,",
  "snp2.7:18.2_0": "Sukate cittasibbane;",
  "snp2.7:18.3_0": "Nivesane nivese ca,",
  "snp2.7:18.4_0": "Vibhatte bhāgaso mite.",
  "snp2.7:19.1_0": "Gomaṇḍalaparibyūḷhaṁ,",
  "snp2.7:19.2_0": "Nārīvaragaṇāyutaṁ;",
  "snp2.7:19.3_0": "Uḷāraṁ mānusaṁ bhogaṁ,",
  "snp2.7:19.4_0": "Abhijjhāyiṁsu brāhmaṇā.",
  "snp2.7:20.1_0": "Te tattha mante ganthetvā,",
  "snp2.7:20.2_0": "Okkākaṁ tadupāgamuṁ;",
  "snp2.7:20.3_0": "Pahūtadhanadhaññosi,",
  "snp2.7:20.4_0": "Yajassu bahu te vittaṁ;",
  "snp2.7:20.5_0": "Yajassu bahu te dhanaṁ.",
  "snp2.7:21.1_0": "Tato ca rājā saññatto,",
  "snp2.7:21.2_0": "Brāhmaṇehi rathesabho;",
  "snp2.7:21.3_0": "Assamedhaṁ purisamedhaṁ,",
  "snp2.7:21.4_0": "Sammāpāsaṁ vājapeyyaṁ niraggaḷaṁ;",
  "snp2.7:21.5_0": "Ete yāge yajitvāna,",
  "snp2.7:21.6_0": "Brāhmaṇānamadā dhanaṁ.",
  "snp2.7:22.1_0": "Gāvo sayanañca vatthañca,",
  "snp2.7:22.2_0": "Nāriyo samalaṅkatā;",
  "snp2.7:22.3_0": "Rathe cājaññasaṁyutte,",
  "snp2.7:22.4_0": "Sukate cittasibbane.",
  "snp2.7:23.1_0": "Nivesanāni rammāni,",
  "snp2.7:23.2_0": "Suvibhattāni bhāgaso;",
  "snp2.7:23.3_0": "Nānādhaññassa pūretvā,",
  "snp2.7:23.4_0": "Brāhmaṇānamadā dhanaṁ.",
  "snp2.7:24.1_0": "Te ca tattha dhanaṁ laddhā,",
  "snp2.7:24.2_0": "Sannidhiṁ samarocayuṁ;",
  "snp2.7:24.3_0": "Tesaṁ icchāvatiṇṇānaṁ,",
  "snp2.7:24.4_0": "Bhiyyo taṇhā pavaḍḍhatha;",
  "snp2.7:24.5_0": "Te tattha mante ganthetvā,",
  "snp2.7:24.6_0": "Okkākaṁ puna mupāgamuṁ.",
  "snp2.7:25.1_0": "Yathā āpo ca pathavī ca,",
  "snp2.7:25.2_0": "Hiraññaṁ dhanadhāniyaṁ;",
  "snp2.7:25.3_0": "Evaṁ gāvo manussānaṁ,",
  "snp2.7:25.4_0": "Parikkhāro so hi pāṇinaṁ;",
  "snp2.7:25.5_0": "Yajassu bahu te vittaṁ,",
  "snp2.7:25.6_0": "Yajassu bahu te dhanaṁ.",
  "snp2.7:26.1_0": "Tato ca rājā saññatto,",
  "snp2.7:26.2_0": "Brāhmaṇehi rathesabho;",
  "snp2.7:26.3_0": "Nekā satasahassiyo,",
  "snp2.7:26.4_0": "Gāvo yaññe aghātayi.",
  "snp2.7:27.1_0": "Na pādā na visāṇena,",
  "snp2.7:27.2_0": "Nāssu hiṁsanti kenaci;",
  "snp2.7:27.3_0": "Gāvo eḷakasamānā,",
  "snp2.7:27.4_0": "Soratā kumbhadūhanā;",
  "snp2.7:27.5_0": "Tā visāṇe gahetvāna,",
  "snp2.7:27.6_0": "Rājā satthena ghātayi.",
  "snp2.7:28.1_0": "Tato devā pitaro ca,",
  "snp2.7:28.2_0": "Indo asurarakkhasā;",
  "snp2.7:28.3_0": "Adhammo iti pakkanduṁ,",
  "snp2.7:28.4_0": "Yaṁ satthaṁ nipatī gave.",
  "snp2.7:29.1_0": "Tayo rogā pure āsuṁ,",
  "snp2.7:29.2_0": "Icchā anasanaṁ jarā;",
  "snp2.7:29.3_0": "Pasūnañca samārambhā,",
  "snp2.7:29.4_0": "Aṭṭhānavutimāgamuṁ.",
  "snp2.7:30.1_0": "Eso adhammo daṇḍānaṁ,",
  "snp2.7:30.2_0": "Okkanto purāṇo ahu;",
  "snp2.7:30.3_0": "Adūsikāyo haññanti,",
  "snp2.7:30.4_0": "Dhammā dhaṁsanti yājakā.",
  "snp2.7:31.1_0": "Evameso aṇudhammo,",
  "snp2.7:31.2_0": "Porāṇo viññugarahito;",
  "snp2.7:31.3_0": "Yattha edisakaṁ passati,",
  "snp2.7:31.4_0": "Yājakaṁ garahatī jano.",
  "snp2.7:32.1_0": "Evaṁ dhamme viyāpanne,",
  "snp2.7:32.2_0": "Vibhinnā suddavessikā;",
  "snp2.7:32.3_0": "Puthū vibhinnā khattiyā,",
  "snp2.7:32.4_0": "Patiṁ bhariyāvamaññatha.",
  "snp2.7:33.1_0": "Khattiyā brahmabandhū ca,",
  "snp2.7:33.2_0": "Ye caññe gottarakkhitā;",
  "snp2.7:33.3_0": "Jātivādaṁ nirākatvā,",
  "snp2.7:33.4_0": "Kāmānaṁ vasamanvagun”ti.",
  "snp2.7:34.1_0": "Evaṁ vutte,",
  "snp2.7:34.1_1": "te brāhmaṇamahāsālā bhagavantaṁ etadavocuṁ:",
  "snp2.7:34.2_0": "“abhikkantaṁ, bho gotama …pe…",
  "snp2.7:34.3_0": "upāsake no bhavaṁ gotamo dhāretu ajjatagge pāṇupete saraṇaṁ gate”ti.",
  "snp2.7:34.4_0": "Brāhmaṇadhammikasuttaṁ sattamaṁ."
}