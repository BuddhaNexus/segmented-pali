{
  "tha-ap33:0.1_0": "Therāpadāna",
  "tha-ap33:0.2_0": "Kuṇḍadhānavagga",
  "tha-ap33:0.3_0": "1. Kuṇḍadhānattheraapadāna",
  "tha-ap33:1.1_0": "“Sattāhaṁ paṭisallīnaṁ,",
  "tha-ap33:1.2_0": "sayambhuṁ aggapuggalaṁ;",
  "tha-ap33:1.3_0": "Pasannacitto sumano,",
  "tha-ap33:1.4_0": "buddhaseṭṭhaṁ upaṭṭhahiṁ.",
  "tha-ap33:2.1_0": "Vuṭṭhitaṁ kālamaññāya,",
  "tha-ap33:2.2_0": "padumuttaraṁ mahāmuniṁ;",
  "tha-ap33:2.3_0": "Mahantiṁ kadalīkaṇṇiṁ,",
  "tha-ap33:2.4_0": "gahetvā upagacchahaṁ.",
  "tha-ap33:3.1_0": "Paṭiggahetvā bhagavā,",
  "tha-ap33:3.2_0": "sabbaññū lokanāyako;",
  "tha-ap33:3.3_0": "Mama cittaṁ pasādento,",
  "tha-ap33:3.4_0": "paribhuñji mahāmuni.",
  "tha-ap33:4.1_0": "Paribhuñjitvā sambuddho,",
  "tha-ap33:4.2_0": "satthavāho anuttaro;",
  "tha-ap33:4.3_0": "Sakāsane nisīditvā,",
  "tha-ap33:4.4_0": "imā gāthā abhāsatha.",
  "tha-ap33:5.1_0": "‘Ye ca santi samitāro,",
  "tha-ap33:5.2_0": "yakkhā imamhi pabbate;",
  "tha-ap33:5.3_0": "Araññe bhūtabhabyāni,",
  "tha-ap33:5.4_0": "suṇantu vacanaṁ mama.",
  "tha-ap33:6.1_0": "Yo so buddhaṁ upaṭṭhāsi,",
  "tha-ap33:6.2_0": "migarājaṁva kesariṁ;",
  "tha-ap33:6.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap33:6.4_0": "suṇātha mama bhāsato.",
  "tha-ap33:7.1_0": "Ekādasañcakkhattuṁ so,",
  "tha-ap33:7.2_0": "devarājā bhavissati;",
  "tha-ap33:7.3_0": "Catutiṁsatikkhattuñca,",
  "tha-ap33:7.4_0": "cakkavattī bhavissati.",
  "tha-ap33:8.1_0": "Kappasatasahassamhi,",
  "tha-ap33:8.2_0": "okkākakulasambhavo;",
  "tha-ap33:8.3_0": "Gotamo nāma gottena,",
  "tha-ap33:8.4_0": "satthā loke bhavissati.",
  "tha-ap33:9.1_0": "Akkositvāna samaṇe,",
  "tha-ap33:9.2_0": "sīlavante anāsave;",
  "tha-ap33:9.3_0": "Pāpakammavipākena,",
  "tha-ap33:9.4_0": "nāmadheyyaṁ labhissati.",
  "tha-ap33:10.1_0": "Tassa dhamme sudāyādo,",
  "tha-ap33:10.2_0": "oraso dhammanimmito;",
  "tha-ap33:10.3_0": "Kuṇḍadhānoti nāmena,",
  "tha-ap33:10.4_0": "sāvako so bhavissati’.",
  "tha-ap33:11.1_0": "Pavivekamanuyutto,",
  "tha-ap33:11.2_0": "jhāyī jhānarato ahaṁ;",
  "tha-ap33:11.3_0": "Tosayitvāna satthāraṁ,",
  "tha-ap33:11.4_0": "viharāmi anāsavo.",
  "tha-ap33:12.1_0": "Sāvakehi parivuto,",
  "tha-ap33:12.2_0": "bhikkhusaṅghapurakkhato;",
  "tha-ap33:12.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap33:12.4_0": "salākaṁ gāhayī jino.",
  "tha-ap33:13.1_0": "Ekaṁsaṁ cīvaraṁ katvā,",
  "tha-ap33:13.2_0": "vanditvā lokanāyakaṁ;",
  "tha-ap33:13.3_0": "Vadataṁ varassa purato,",
  "tha-ap33:13.4_0": "paṭhamaṁ aggahesahaṁ.",
  "tha-ap33:14.1_0": "Tena kammena bhagavā,",
  "tha-ap33:14.2_0": "dasasahassikampako;",
  "tha-ap33:14.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap33:14.4_0": "aggaṭṭhāne ṭhapesi maṁ.",
  "tha-ap33:15.1_0": "Vīriyaṁ me dhuradhorayhaṁ,",
  "tha-ap33:15.2_0": "yogakkhemādhivāhanaṁ;",
  "tha-ap33:15.3_0": "Dhāremi antimaṁ dehaṁ,",
  "tha-ap33:15.4_0": "sammāsambuddhasāsane.",
  "tha-ap33:16.1_0": "Paṭisambhidā catasso,",
  "tha-ap33:16.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap33:16.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap33:16.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap33:17.1_0": "Itthaṁ sudaṁ āyasmā kuṇḍadhāno thero imā gāthāyo abhāsitthāti.",
  "tha-ap33:18.1_0": "Kuṇḍadhānattherassāpadānaṁ paṭhamaṁ."
}