{
  "tha-ap183:0.1_0": "Therāpadāna",
  "tha-ap183:0.2_0": "Kuṭajapupphiyavagga",
  "tha-ap183:0.3_0": "1. Kuṭajapupphiyattheraapadāna",
  "tha-ap183:1.1_0": "“Suvaṇṇavaṇṇaṁ sambuddhaṁ,",
  "tha-ap183:1.2_0": "Sataraṁsiṁva uggataṁ;",
  "tha-ap183:1.3_0": "Disaṁ anuvilokentaṁ,",
  "tha-ap183:1.4_0": "Gacchantaṁ anilañjase.",
  "tha-ap183:2.1_0": "Kuṭajaṁ pupphitaṁ disvā,",
  "tha-ap183:2.2_0": "saṁvitthatasamotthataṁ;",
  "tha-ap183:2.3_0": "Rukkhato ocinitvāna,",
  "tha-ap183:2.4_0": "phussassa abhiropayiṁ.",
  "tha-ap183:3.1_0": "Dvenavute ito kappe,",
  "tha-ap183:3.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap183:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap183:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap183:4.1_0": "Ito sattarase kappe,",
  "tha-ap183:4.2_0": "tayo āsuṁ supupphitā;",
  "tha-ap183:4.3_0": "Sattaratanasampannā,",
  "tha-ap183:4.4_0": "cakkavattī mahabbalā.",
  "tha-ap183:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap183:5.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap183:5.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap183:5.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap183:6.1_0": "Itthaṁ sudaṁ āyasmā kuṭajapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap183:7.1_0": "Kuṭajapupphiyattherassāpadānaṁ paṭhamaṁ."
}