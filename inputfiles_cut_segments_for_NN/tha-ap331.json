{
  "tha-ap331:0.1_0": "Therāpadāna",
  "tha-ap331:0.2_0": "Umāpupphiyavagga",
  "tha-ap331:0.3_0": "9 Pupphacchattiyattheraapadāna",
  "tha-ap331:1.1_0": "“Siddhatthassa bhagavato,",
  "tha-ap331:1.2_0": "lokajeṭṭhassa tādino;",
  "tha-ap331:1.3_0": "Saccaṁ pakāsayantassa,",
  "tha-ap331:1.4_0": "nibbāpentassa pāṇino.",
  "tha-ap331:2.1_0": "Jalajaṁ āharitvāna,",
  "tha-ap331:2.2_0": "satapattaṁ manoramaṁ;",
  "tha-ap331:2.3_0": "Pupphassa chattaṁ katvāna,",
  "tha-ap331:2.4_0": "buddhassa abhiropayiṁ.",
  "tha-ap331:3.1_0": "Siddhattho ca lokavidū,",
  "tha-ap331:3.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap331:3.3_0": "Bhikkhusaṅghe ṭhito satthā,",
  "tha-ap331:3.4_0": "imaṁ gāthaṁ abhāsatha.",
  "tha-ap331:4.1_0": "‘Yo me cittaṁ pasādetvā,",
  "tha-ap331:4.2_0": "pupphacchattaṁ adhārayiṁ;",
  "tha-ap331:4.3_0": "Tena cittappasādena,",
  "tha-ap331:4.4_0": "duggatiṁ so na gacchati’.",
  "tha-ap331:5.1_0": "Idaṁ vatvāna sambuddho,",
  "tha-ap331:5.2_0": "siddhattho lokanāyako;",
  "tha-ap331:5.3_0": "Uyyojetvāna parisaṁ,",
  "tha-ap331:5.4_0": "vehāsaṁ nabhamuggami.",
  "tha-ap331:6.1_0": "Vuṭṭhite naradevamhi,",
  "tha-ap331:6.2_0": "setacchattampi vuṭṭhahi;",
  "tha-ap331:6.3_0": "Purato buddhaseṭṭhassa,",
  "tha-ap331:6.4_0": "gacchati chattamuttamaṁ.",
  "tha-ap331:7.1_0": "Catunnavutito kappe,",
  "tha-ap331:7.2_0": "yaṁ chattaṁ abhiropayiṁ;",
  "tha-ap331:7.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap331:7.4_0": "pupphacchattassidaṁ phalaṁ.",
  "tha-ap331:8.1_0": "Catusattatikappamhi,",
  "tha-ap331:8.2_0": "aṭṭha jalasikhā ahū;",
  "tha-ap331:8.3_0": "Sattaratanasampannā,",
  "tha-ap331:8.4_0": "cakkavattī mahabbalā.",
  "tha-ap331:9.1_0": "Paṭisambhidā catasso,",
  "tha-ap331:9.2_0": "…pe…",
  "tha-ap331:9.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap331:10.1_0": "Itthaṁ sudaṁ āyasmā pupphacchattiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap331:11.1_0": "Pupphacchattiyattherassāpadānaṁ navamaṁ."
}