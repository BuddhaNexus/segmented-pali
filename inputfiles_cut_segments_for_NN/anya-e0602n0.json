{
  "anya-e0602n0:0_0": " Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n0:1_0": "Mahāpaṇāmapāṭha",
  "anya-e0602n0:2_0": "(Buddhavandanā)",
  "anya-e0602n0:3_0": "1.",
  "anya-e0602n0:4_0": " So , ko; Ne, saṁ;",
  "anya-e0602n0:5_0": "2.",
  "anya-e0602n0:6_0": " Satthā, nesaṁ; Khemaṁ, dātā;",
  "anya-e0602n0:7_0": "3.",
  "anya-e0602n0:8_0": " Heḷāta-kkāro so; Jantūnaṁ, no mā nu;",
  "anya-e0602n0:9_0": "4.",
  "anya-e0602n0:10_0": " So lokandhaṁ, hantvā nakko;",
  "anya-e0602n0:11_0": "Sattambojaṁ, bodhetā nu.",
  "anya-e0602n0:12_0": "5.",
  "anya-e0602n0:13_0": " Jinasūriyo, tibhavanabhe;",
  "anya-e0602n0:14_0": "Muhatimiraṁ, abhitapaye.",
  "anya-e0602n0:15_0": "6.",
  "anya-e0602n0:16_0": " Jeno jinamūle, disvā janakāyaṁ;",
  "anya-e0602n0:17_0": "Saṁsāranimuggaṁ, sabbaññuta micchaṁ.",
  "anya-e0602n0:18_0": "7.",
  "anya-e0602n0:19_0": " Hitvā karupetaṁ, mokkhaṁ paṇidhānaṁ;",
  "anya-e0602n0:20_0": "Vattesi dayāṇā, yo taṁ muni vande.",
  "anya-e0602n0:21_0": "8.",
  "anya-e0602n0:22_0": " Sutāyubhariyā me, dhanaṅgamapi cajjaṁ.",
  "anya-e0602n0:23_0": "Cinaṁ budhinidāne, agā muniyaṁ metaṁ.",
  "anya-e0602n0:24_0": "9.",
  "anya-e0602n0:25_0": " So sasajātiya dehaṁ, cajjiya dānavarañca;",
  "anya-e0602n0:26_0": "Nāgusabho varasīlaṁ, pūrayi samparicāgo.",
  "anya-e0602n0:27_0": "10.",
  "anya-e0602n0:28_0": " Nekkhammaggaṁ rājā hutvā, senabbidvā paññāseṭṭhaṁ;",
  "anya-e0602n0:29_0": "Vedehindo vīrukkaṁsaṁ, khantīvādī khantīseṭṭhaṁ.",
  "anya-e0602n0:30_0": "11.",
  "anya-e0602n0:31_0": " So sutasomo tathagaṁ, temiya dhiṭṭhānavaraṁ;",
  "anya-e0602n0:32_0": "Ekabhugo mettavaraṁ, lomahasopekkhataraṁ.",
  "anya-e0602n0:33_0": "12.",
  "anya-e0602n0:34_0": " Pāramī tidukkarāva, pūriyāna seṭṭhabodhi;",
  "anya-e0602n0:35_0": "Pāpuṇittha yo ananta-dhammasāradaṁ namāmi.",
  "anya-e0602n0:36_0": "13.",
  "anya-e0602n0:37_0": " Pahāya cakkavattikaṁ, karopanīta maddiyaṁ;",
  "anya-e0602n0:38_0": "Bhusidhare sasenakaṁ, ajeni pāpimaṁ name.",
  "anya-e0602n0:39_0": "14.",
  "anya-e0602n0:40_0": " Athuttaraṁ jayākaraṁ, bahūpakārataṁ jino;",
  "anya-e0602n0:41_0": "Paṭicca nimmisakkhibhi, udikkhate namāmi taṁ.",
  "anya-e0602n0:42_0": "15.",
  "anya-e0602n0:43_0": " Caṅkame maruvimati yo, chindayaṁ kami rataniye;",
  "anya-e0602n0:44_0": "Iddhipāṭihiraṇakaro, cakkhumaṁ tamabhipaṇame.",
  "anya-e0602n0:45_0": "16.",
  "anya-e0602n0:46_0": " Atha ratanaghare buddho, chadidhiti janayaṁ saṅkhyaṁ;",
  "anya-e0602n0:47_0": "Sīmīsā tamabhidhammaṁ yo, suranaramahitaṁ vande.",
  "anya-e0602n0:48_0": "17.",
  "anya-e0602n0:49_0": " Nigrodhantika nubbhavī sukhaṁ, dhammaṁ yo vicinaṁ nadhīvaro;",
  "anya-e0602n0:50_0": "Kicchāladdha manaññabodhiyaṁ, vande taṁ sugataṁ nigrocaraṁ.",
  "anya-e0602n0:51_0": "18.",
  "anya-e0602n0:52_0": " Sabbhogehi tha mucalindena,",
  "anya-e0602n0:53_0": "Nāgindena rahasi pāvutto;",
  "anya-e0602n0:54_0": "Sokhyaṁ yo nubhavi vimuttiṁtaṁ,",
  "anya-e0602n0:55_0": "Vande mārāji atulappañño.",
  "anya-e0602n0:56_0": "19.",
  "anya-e0602n0:57_0": " Kāruṇiko rājāyatane yo,",
  "anya-e0602n0:58_0": "Bhoja muḷāraṁ bhojjarasekaṁ;",
  "anya-e0602n0:59_0": "Vāsa makā nantagguṇadhāro,",
  "anya-e0602n0:60_0": "Ekagato vandāmi mahesī.",
  "anya-e0602n0:61_0": "20.",
  "anya-e0602n0:62_0": " Keyyaṁ keyyaṁ abhijayaketuṁ,",
  "anya-e0602n0:63_0": "Jeyyaṁ jeyyaṁ varajayapānaṁ;",
  "anya-e0602n0:64_0": "Peyyaṁ peyyaṁ suvici name taṁ,",
  "anya-e0602n0:65_0": "Neyyaṁ neyyaṁ samatamupekkhiṁ.",
  "anya-e0602n0:66_0": "21.",
  "anya-e0602n0:67_0": " Satta ca sattāhe vijitāvī,",
  "anya-e0602n0:68_0": "Khepiya nigrodhaṁ puna gantvā;",
  "anya-e0602n0:69_0": "Dhammasududdasyaṁ pati jāto,",
  "anya-e0602n0:70_0": "Dhammakathā pposukka vitakko.",
  "anya-e0602n0:71_0": "22.",
  "anya-e0602n0:72_0": " Marugaṇehi brahmunā samaṁ,",
  "anya-e0602n0:73_0": "Ratanadāmameruṇā dadā;",
  "anya-e0602n0:74_0": "Samabhiyācito paṭissavaṁ,",
  "anya-e0602n0:75_0": "Dasabalo namāmi desituṁ.",
  "anya-e0602n0:76_0": "23.",
  "anya-e0602n0:77_0": " Gantvā isippātakkānanañca,",
  "anya-e0602n0:78_0": "Satthā migaddāyaṁ desayittha;",
  "anya-e0602n0:79_0": "Saccappakāraṁ yo dhammacakka-",
  "anya-e0602n0:80_0": "Suttaṁ name chabbīdhaṁsu tāva.",
  "anya-e0602n0:81_0": "24.",
  "anya-e0602n0:82_0": " Rañño magadhassa katappaṭiñño,",
  "anya-e0602n0:83_0": "Gantvānatha rājagahaṁ vineti;",
  "anya-e0602n0:84_0": "Satte malarogayute gadaggaṁ,",
  "anya-e0602n0:85_0": "Pāyetuna taṁ paṇame bhisakkaṁ.",
  "anya-e0602n0:86_0": "25.",
  "anya-e0602n0:87_0": " Sakyādhivāse kapile saññatiṁ,",
  "anya-e0602n0:88_0": "Mānaddhajaṁ bhindiya middhivātā;",
  "anya-e0602n0:89_0": "Dhammāmataṁ pāyi pituppabhuti,",
  "anya-e0602n0:90_0": "Vandāmi sakyinda manomadassiṁ.",
  "anya-e0602n0:91_0": "26.",
  "anya-e0602n0:92_0": " Anāthapiṇḍoti vhayena nanta-",
  "anya-e0602n0:93_0": "Ddhanaṁ cajitvā sukate vihāre;",
  "anya-e0602n0:94_0": "Vihāsi bhiyyo janatā hitatthaṁ,",
  "anya-e0602n0:95_0": "Sudhammabheriṁ vadayaṁ bhivande.",
  "anya-e0602n0:96_0": "27.",
  "anya-e0602n0:97_0": " Upetapuññaṁ varalakkhaṇokaṁ-",
  "anya-e0602n0:98_0": "Ṇokaṁ visuddhaṁ jalitappadīmaṁ;",
  "anya-e0602n0:99_0": "Dīpaṁ pajānaṁ anighaṁ navajjaṁ-",
  "anya-e0602n0:100_0": "Navajjavācaṁ sugataṁ namāmi.",
  "anya-e0602n0:101_0": "28.",
  "anya-e0602n0:102_0": " Munibhānu dhammapabhāhi jana-",
  "anya-e0602n0:103_0": "Mbuja muddhatandhatamo sutapo;",
  "anya-e0602n0:104_0": "Karuṇāruṇo samabodhayi yo,",
  "anya-e0602n0:105_0": "Bhavisītalattapano paṇame.",
  "anya-e0602n0:106_0": "29.",
  "anya-e0602n0:107_0": " Indu viyambaramajjhatale yo,",
  "anya-e0602n0:108_0": "Rājati tāragaṇena munindo;",
  "anya-e0602n0:109_0": "Ariyagaṇapparito tibhave taṁ,",
  "anya-e0602n0:110_0": "Sādara muggatasobha mavandi.",
  "anya-e0602n0:111_0": "30.",
  "anya-e0602n0:112_0": " Mūlāmūlā tiṁsatipāramiyo,",
  "anya-e0602n0:113_0": "Sākhāsākhā majjhimajjhānakāyā;",
  "anya-e0602n0:114_0": "Pattāpattā buddhacakkhuni yassa,",
  "anya-e0602n0:115_0": "Pupphāpupphā kāruṇā maggakhandho.",
  "anya-e0602n0:116_0": "31.",
  "anya-e0602n0:117_0": " Sārāsārā yamakā pheggubhiññā,",
  "anya-e0602n0:118_0": "Sabbālambaṅkurakaṁ sīlavaṇṭaṁ;",
  "anya-e0602n0:119_0": "Sesādhammā madhupakkapphalāni,",
  "anya-e0602n0:120_0": "Raṁsīchallī sutacā lakkhaṇāni.",
  "anya-e0602n0:121_0": "32.",
  "anya-e0602n0:122_0": " Chāyupagā suṁ puthunaradevā,",
  "anya-e0602n0:123_0": "Mārajidīpaṅkara mahijātaṁ;",
  "anya-e0602n0:124_0": "Patthatanantañca kusalabījaṁ,",
  "anya-e0602n0:125_0": "Ekaruhaṁ pādapamuni vande.",
  "anya-e0602n0:126_0": "33.",
  "anya-e0602n0:127_0": " Māratitthiyaripuṁ tamañca yo,",
  "anya-e0602n0:128_0": "Dhaṁsayaṁ nagaradhamma māpayaṁ;",
  "anya-e0602n0:129_0": "Sīlanīvaraṇa dvārakoṭṭhakaṁ,",
  "anya-e0602n0:130_0": "Esikāparamasaddha muttamaṁ.",
  "anya-e0602n0:131_0": "34.",
  "anya-e0602n0:132_0": " Dvārapālasuyataṁ satiṭālaṁ,",
  "anya-e0602n0:133_0": "Ñāṇacaccara sighāṭapadiddhiṁ;",
  "anya-e0602n0:134_0": "Dhammamaggakuṭisāla sahittaṁ,",
  "anya-e0602n0:135_0": "Dhammasenapatisārijabhūtaṁ.",
  "anya-e0602n0:136_0": "35.",
  "anya-e0602n0:137_0": " Dutiyasutaparohitaṁ mahā-",
  "anya-e0602n0:138_0": "Dhutaguṇadharamaggha dassikaṁ;",
  "anya-e0602n0:139_0": "Vinayacinaka dhammarakkhakaṁ,",
  "anya-e0602n0:140_0": "Tibhavapatika dhammarājiyaṁ.",
  "anya-e0602n0:141_0": "36.",
  "anya-e0602n0:142_0": " Sutaṁ sutaṁ sabbadhi sajjanaṁjanaṁ,",
  "anya-e0602n0:143_0": "Mitaṁ mitaṁ nantaguṇālayaṁ layaṁ;",
  "anya-e0602n0:144_0": "Hutaṁ hutaṁ jantunamānamaṁ namaṁ,",
  "anya-e0602n0:145_0": "Bhave bhave tebhavamaṅgalaṁ galaṁ.",
  "anya-e0602n0:146_0": "37.",
  "anya-e0602n0:147_0": " Lokābhirāmaṁ ramaṇeyyaveduraṁ,",
  "anya-e0602n0:148_0": "Lokantaguṁ antubhayānupāgataṁ;",
  "anya-e0602n0:149_0": "Lokaddhajaṁ mānadhajappahārakaṁ,",
  "anya-e0602n0:150_0": "Lokaggaruṁ aggaru paccaye name.",
  "anya-e0602n0:151_0": "38.",
  "anya-e0602n0:152_0": " Makuṭaggaphalaṁ nayanañcanikaṁ,",
  "anya-e0602n0:153_0": "Savanabbhusanaṁ vadanabbhusanaṁ;",
  "anya-e0602n0:154_0": "Galamaṇḍanamiddhi manaññurasaṁ,",
  "anya-e0602n0:155_0": "Kiriyaññudaraṁ dvikhaṇaññukaraṁ.",
  "anya-e0602n0:156_0": "39.",
  "anya-e0602n0:157_0": " Kaṭivibhūsana majjhimaññaṇakaṁ,",
  "anya-e0602n0:158_0": "Dayavilepana dhāraṇamaṇḍanaṁ;",
  "anya-e0602n0:159_0": "Paṭakhilaññunivattha manuttaraṁ,",
  "anya-e0602n0:160_0": "Munimaruttama meka mahaṁ name.",
  "anya-e0602n0:161_0": "40.",
  "anya-e0602n0:162_0": " Sativara sucakaṁ ibbhaggapaññaṁ,",
  "anya-e0602n0:163_0": "Suvīriyavasuvāhaṁ pītiselaṁ;",
  "anya-e0602n0:164_0": "Gahapatisamathaggaṁ thīpasaddhiṁ,",
  "anya-e0602n0:165_0": "Asaṇiyasunupekkhaṁ sattabhogaṁ.",
  "anya-e0602n0:166_0": "41.",
  "anya-e0602n0:167_0": " Catudisikiddhippada masahāyaṁ,",
  "anya-e0602n0:168_0": "Suparivutaṁ khattiyavirajānaṁ;",
  "anya-e0602n0:169_0": "Suciparisaṁ devanara manāpaṁ,",
  "anya-e0602n0:170_0": "Dasabalacakkādhipati bhivande.",
  "anya-e0602n0:171_0": "42.",
  "anya-e0602n0:172_0": " Samādhibbahiddhaṁ saticchaṭṭhaselaṁ,",
  "anya-e0602n0:173_0": "Virappañcamā jīvamajjhaṁ sukamma-",
  "anya-e0602n0:174_0": "Ttatiyaṁ suvācādutiyaṁ bhiseṭṭhaṁ,",
  "anya-e0602n0:175_0": "Samātakkapubbañca sattappavāraṁ.",
  "anya-e0602n0:176_0": "43.",
  "anya-e0602n0:177_0": " Vividhañāṇapabhutibbasākaraṁ,",
  "anya-e0602n0:178_0": "Bahumahiddhika marūna māsayaṁ;",
  "anya-e0602n0:179_0": "Dhuṁvapabhājalitarāmaṇeyyakaṁ,",
  "anya-e0602n0:180_0": "Sugatanerunagarāja māname.",
  "anya-e0602n0:181_0": "44.",
  "anya-e0602n0:182_0": " Sīlajjalaṁ ratanadhamma mākaraṁ,",
  "anya-e0602n0:183_0": "Bhiññāviciṁ satikulaṭṭhi gambhiraṁ;",
  "anya-e0602n0:184_0": "Vitthiṇṇañāṇa mariyodajāsayaṁ,",
  "anya-e0602n0:185_0": "Aṭṭhambīdhacchariyakaṁ asandanaṁ.",
  "anya-e0602n0:186_0": "45.",
  "anya-e0602n0:187_0": " Bahunajjamosaraṇa mekarasaṁ,",
  "anya-e0602n0:188_0": "Durupaggamaṁ acitasambharinaṁ;",
  "anya-e0602n0:189_0": "Puthupotapuññavatameva name,",
  "anya-e0602n0:190_0": "Dvīpaduttamaṇṇava nadindavaraṁ.",
  "anya-e0602n0:191_0": "46.",
  "anya-e0602n0:192_0": " Abhiniharadhanuṁ guṇapāramiṁ,",
  "anya-e0602n0:193_0": "Naḷamatimanabājarahammukhā;",
  "anya-e0602n0:194_0": "Dhitisamitasarena sudhārayaṁ,",
  "anya-e0602n0:195_0": "Malama gagaṇa mekapavedanā.",
  "anya-e0602n0:196_0": "47.",
  "anya-e0602n0:197_0": " Yo pāvedhesiṁ aggamaggañca tūṇiṁ,",
  "anya-e0602n0:198_0": "Dhammālaṅkārabbamma mekabbalaṁ taṁ;",
  "anya-e0602n0:199_0": "Nettiṁsānantañāṇa gīrellimantaṁ,",
  "anya-e0602n0:200_0": "Sabbaññussāsaṁ iddhidaṇḍaṁ namāmi.",
  "anya-e0602n0:201_0": "48.",
  "anya-e0602n0:202_0": " Varatapavuṭṭhi subījakasaddhā,",
  "anya-e0602n0:203_0": "Matiyuganaṅgala hīrutapīsā;",
  "anya-e0602n0:204_0": "Susamatharajju satidvijatuttaṁ,",
  "anya-e0602n0:205_0": "Vīriyadurāvaha saccanidānaṁ.",
  "anya-e0602n0:206_0": "49.",
  "anya-e0602n0:207_0": " Vatisaṁvaraṁ soratamocanañcaṁ,",
  "anya-e0602n0:208_0": "Saraṇā nivattabbahanatthaṁ yassa;",
  "anya-e0602n0:209_0": "Amatapphalaṁ nekarasehupetaṁ,",
  "anya-e0602n0:210_0": "Sugataṁ mahākassaka mābhivande.",
  "anya-e0602n0:211_0": "50.",
  "anya-e0602n0:212_0": " Devaggo tidasapure varāsane yo,",
  "anya-e0602n0:213_0": "Devānaṁ janikapabhutinaṁ bhidhammaṁ;",
  "anya-e0602n0:214_0": "Bālakkova laḷayamācale timāsaṁ,",
  "anya-e0602n0:215_0": "Desesyā paravisayaṁ name ajeyyo.",
  "anya-e0602n0:216_0": "51.",
  "anya-e0602n0:217_0": " Mahāyaso vividhasubhappakāsakaṁ,",
  "anya-e0602n0:218_0": "Kurūsu yo amitaguṇo tamonudo;",
  "anya-e0602n0:219_0": "Parappavādahari subhānuyoginaṁ,",
  "anya-e0602n0:220_0": "Namāmi taṁ kathayi satippaṭhānakaṁ.",
  "anya-e0602n0:221_0": "52.",
  "anya-e0602n0:222_0": " Samathakapaliko sasnehasammāsati,",
  "anya-e0602n0:223_0": "Paramamatiginī savaṭṭiparakkamo;",
  "anya-e0602n0:224_0": "Sakalajutikaro sudhammapadīpako,",
  "anya-e0602n0:225_0": "Ima mupajalito jinena namāmahaṁ.",
  "anya-e0602n0:226_0": "53.",
  "anya-e0602n0:227_0": " Vigatagatamalaṁ malagatavigataṁ,",
  "anya-e0602n0:228_0": "Mahita hitamanaṁ manahitamahitaṁ;",
  "anya-e0602n0:229_0": "Vibhavabhavakaraṁ karabhavavibhavaṁ,",
  "anya-e0602n0:230_0": "Sujana janaguṇaṁ guṇajanasujanaṁ.",
  "anya-e0602n0:231_0": "54.",
  "anya-e0602n0:232_0": " Sīlaggadaṇḍavicitaṁ susamādhipattaṁ,",
  "anya-e0602n0:233_0": "Sobhāsamujjala manantaga ñāṇasīkhaṁ;",
  "anya-e0602n0:234_0": "Saddhammaseṭṭharatanañca tilokaketuṁ,",
  "anya-e0602n0:235_0": "Vandāmi locanabhiseka susobhayuttaṁ.",
  "anya-e0602n0:236_0": "55.",
  "anya-e0602n0:237_0": " Vinayanaya manayavinaya manamitaṁ,",
  "anya-e0602n0:238_0": "Vijayajaya majayavijaya matulitaṁ;",
  "anya-e0602n0:239_0": "Vibhajabhaja mabhajavibhaja mananakaṁ,",
  "anya-e0602n0:240_0": "Visamasama masamavisama mabhiname.",
  "anya-e0602n0:241_0": "56.",
  "anya-e0602n0:242_0": " Paramarama maramaparama matiguṇaṁ,",
  "anya-e0602n0:243_0": "Pagahagati magatipagata mamamakaṁ;",
  "anya-e0602n0:244_0": "Pacayacaya macayapapaya manaṇakaṁ,",
  "anya-e0602n0:245_0": "Pakatakata makatapakata macalakaṁ.",
  "anya-e0602n0:246_0": "57.",
  "anya-e0602n0:247_0": " Ujuka mayanamagge mokkhadesaṁ niyāsi,",
  "anya-e0602n0:248_0": "Vararathakujarena cammacakkena satthā;",
  "anya-e0602n0:249_0": "Hiritapadukapālambena dhammassutena,",
  "anya-e0602n0:250_0": "Satinivarayutena ppāṭihiraddhajena.",
  "anya-e0602n0:251_0": "58.",
  "anya-e0602n0:252_0": " Avihananakkhinā suyama nemupakkharā,",
  "anya-e0602n0:253_0": "Udariyamabbhinā paripuraṅgasaccinā;",
  "anya-e0602n0:254_0": "Kusalavibhūsinā nimadakupparena yo,",
  "anya-e0602n0:255_0": "Akharanatesinā gupitasilanandanā.",
  "anya-e0602n0:256_0": "59.",
  "anya-e0602n0:257_0": " Anusanughātinā matipurejavena kāla-",
  "anya-e0602n0:258_0": "Ññutamatisārike na ca visāradatthidaṇḍā;",
  "anya-e0602n0:259_0": "Satituda dhītirasmi manadammasindhavena,",
  "anya-e0602n0:260_0": "Vinayagaṇe namāmi ta matulyasatthavāhaṁ.",
  "anya-e0602n0:261_0": "60.",
  "anya-e0602n0:262_0": " Yamakkaggijālaṁ paravisaya maccherasahitaṁ,",
  "anya-e0602n0:263_0": "Dudiṭṭhandhubbāhaṁ yugagahaṇatitthīna makarī;",
  "anya-e0602n0:264_0": "Bahūnaṁ majjhe yo ratanakamane pāṭihariyaṁ,",
  "anya-e0602n0:265_0": "Jayakketussāpi ta mabhinami kaṇṭambasamipe.",
  "anya-e0602n0:266_0": "61.",
  "anya-e0602n0:267_0": " Nakhajutirajaṁ cakkaṅgopeta pādavarambujaṁ,",
  "anya-e0602n0:268_0": "Subhasirimato raṁsijālaṅgulidasasaṁsubhiṁ;",
  "anya-e0602n0:269_0": "Pavarasirasā devādevā sadā na pilandhayuṁ,",
  "anya-e0602n0:270_0": "Ta mativa manorammaṁ tittīkarā nami yassa ke.",
  "anya-e0602n0:271_0": "62.",
  "anya-e0602n0:272_0": " Buddhopyeko nidhanaguṇino vaṇṇaye yāvajīvaṁ,",
  "anya-e0602n0:273_0": "Kāmaṁ aññaṁ kathamabhaṇa māsuṁ khiyethā yukappo;",
  "anya-e0602n0:274_0": "Na tvevā yaṁ khaya mupavajje yassa vaṇṇo ananto,",
  "anya-e0602n0:275_0": "Taṁ sabbaññuṁ sakalarirī nekanāthaṁ namāmi.",
  "anya-e0602n0:276_0": "63.",
  "anya-e0602n0:277_0": " Pādidīpādaṁ dvinayanadijaṁ dhammakāyaṁ dhisoṇḍaṁ,",
  "anya-e0602n0:278_0": "Bhāṇīsoṇḍaggaṁ saraṇasirasiṁ maggāvālaṁ subhaṅgaṁ;",
  "anya-e0602n0:279_0": "Sīlālaṅkāraṁ vimalibhavu taṁ sattatiṭṭhidhidabbaṁ,",
  "anya-e0602n0:280_0": "Nāthebhindaggaṁ phalakariṇukaṁ mokkhabhojaṁ namāmi.",
  "anya-e0602n0:281_0": "64.",
  "anya-e0602n0:282_0": " Malāloḷullolaṁ atibhayajanaṁ duggasaṁsārasinduṁ,",
  "anya-e0602n0:283_0": "Phiyabbhāniggāho sivataṭamukho nāvi kajjeṭṭhanātho;",
  "anya-e0602n0:284_0": "Padappārakkāmaṁ bahujanagaṇaṁ ekamaggattaramhi,",
  "anya-e0602n0:285_0": "Samāropetvā mattari ta matulasādarañcā bhivande.",
  "anya-e0602n0:286_0": "65.",
  "anya-e0602n0:287_0": " Byāmaṁsugghanadhāra makkuḷusatabbhāṇujjalantattanaṁ,",
  "anya-e0602n0:288_0": "Ukkaṁsajjuti ketumālavicitaṁ saddhammajotindharaṁ;",
  "anya-e0602n0:289_0": "Bundinniggatapajjalanta didhitiṁ ajjatthanā yāva ca,",
  "anya-e0602n0:290_0": "Vandetaṁ muni sakyapuṅgava mahaṁ puṇṇinduvattampi ca.",
  "anya-e0602n0:291_0": "66.",
  "anya-e0602n0:292_0": " Sattamaṁtamaṁ vināsakaṁsakaṁ dadaṁ vineyyakānameva,",
  "anya-e0602n0:293_0": "Bhāvanaṁvanaṁ dhulīkaraṁ karaṁ tidukkaraṁ pajābhibhuñja;",
  "anya-e0602n0:294_0": "Gāravaṁravaṁ manoharaṁharaṁ narānarānayaṁ namāmi,",
  "anya-e0602n0:295_0": "Sādaraṁdaraṁ vinodakaṁdakaṁ pavassakaṁ pajānamiva.",
  "anya-e0602n0:296_0": "67.",
  "anya-e0602n0:297_0": " Buddho nigrodhabimbo mudukaracaraṇo brahmaghoseṇijaṅgho,",
  "anya-e0602n0:298_0": "Kosacchādaṅgajāto punarapi sugato suppatiṭṭhitapādo;",
  "anya-e0602n0:299_0": "Mudodātuṇṇalomo athamapi sugato brahmujuggattabhāvo,",
  "anya-e0602n0:300_0": "Nīlakkhī dīghapaṇhī sukhumamalachavī thomyarassaggasaggī.",
  "anya-e0602n0:301_0": "68.",
  "anya-e0602n0:302_0": " Cattālīsaggadanto samakalapanajo antaraṁsappapīṇo,",
  "anya-e0602n0:303_0": "Cakkenaṅkītapādo aviraḷadasano mārajussaṅkhapādo;",
  "anya-e0602n0:304_0": "Tiṭṭhantonomento bhayakaramudunā jaṇṇukānā masanto,",
  "anya-e0602n0:305_0": "Vaṭṭakkhandho jino gotaruṇapakhumako sīhapubbaḍḍhukāyo.",
  "anya-e0602n0:306_0": "69.",
  "anya-e0602n0:307_0": " Sattappīṇo ca dīghaṅgulaṁ matha sugato lomakūpekalomo,",
  "anya-e0602n0:308_0": "Sampannodātadāṭho kanakasamataco nīlamuddhaggalomo;",
  "anya-e0602n0:309_0": "Sambuddho thūlajivho atha sīhahanuko jālikappādahattho,",
  "anya-e0602n0:310_0": "Nātho uṇhīsasīso iti guṇasahitaṁ taṁ mahesiṁ namāmi.",
  "anya-e0602n0:311_0": "70.",
  "anya-e0602n0:312_0": " Vaṭṭacitānupubbakasubhaṅgulī ruhiramaṭṭhatuṅganakhako,",
  "anya-e0602n0:313_0": "Nigguḷagopphako samapado sīhosabhibha haṁsasannibhakamo;",
  "anya-e0602n0:314_0": "Dakkhiṇatāvatakkami samantamaṇḍala nigaṇṭhi jāṇusubhako,",
  "anya-e0602n0:315_0": "Byañjanapuṇṇaposatanu nābhigambhīra achiddadakkhiṇavaṭo.",
  "anya-e0602n0:316_0": "71.",
  "anya-e0602n0:317_0": " Dviradakarappakāsurubhujo suvibbhajanupubbamaṭṭhaanunā-",
  "anya-e0602n0:318_0": "Nunaalinānupubbarucira ttilādirahitabbisuddhatanuko;",
  "anya-e0602n0:319_0": "Dasasatakoṭi hatthibaladhāraṇo kanakatuṅganāsikasubho,",
  "anya-e0602n0:320_0": "Suruhiradantamaṁsatha sucisiniddhadasano tha lokasaraṇo.",
  "anya-e0602n0:321_0": "72.",
  "anya-e0602n0:322_0": " Suddhapasādindri ca vaṭṭataradāṭho ruhiroṭṭha ca suranaranātho,",
  "anya-e0602n0:323_0": "Āyatasobhabbadano tha muni gambhīrujukāyatasuruciralekho;",
  "anya-e0602n0:324_0": "Byāmapabhāmaṇḍalabundi supuraggaṇṇi ca āyatavisaṭasubhakkhī,",
  "anya-e0602n0:325_0": "Pañcapasādakkhi ca kuñcikasubhaggapakhumo mudutanuruṇajivho.",
  "anya-e0602n0:326_0": "73.",
  "anya-e0602n0:327_0": " Sommasiniddha tyujjalakomala varuṇavimalatanu ca amitaguṇo,",
  "anya-e0602n0:328_0": "Komala dakkhiṇāvaṭa añjanabhidasarisanilaka mudutanuruho;",
  "anya-e0602n0:329_0": "Dakkhiṇavaṭṭakomala saṇusamasunila alulita siraruhi jino,",
  "anya-e0602n0:330_0": "Sobhaṇasaṇṭhāno tha siniddhasiraruhi ca supacitasatakusala jo.",
  "anya-e0602n0:331_0": "74.",
  "anya-e0602n0:332_0": " Nigguḷonigganticchattassarisaatisubhagasira cāyatāruci kaṇṇako,",
  "anya-e0602n0:333_0": "Sosaṇṭhānassaṇhāhārānukamapahutabhamutha suāyatabbhamuko ca so;",
  "anya-e0602n0:334_0": "Suggandhaggatto muddhicātha vadani ca puthulakanalāṭa āyatasobhaṇo,",
  "anya-e0602n0:335_0": "Assāsappassāsātissaṇu dharamasamasama nami ketumālavicittakaṁ.",
  "anya-e0602n0:336_0": "75.",
  "anya-e0602n0:337_0": " Buddhuppādo kimaṅgaṁ atidulabhataraṁ ghosamattampi loke,",
  "anya-e0602n0:338_0": "Tasmā nānappakāraṁ saparahitasukhaṁ viddhasū patthayantā;",
  "anya-e0602n0:339_0": "Yātiṭṭhatthāva haṁ taṁ suranarasaraṇaṁ antarāyappahānaṁ,",
  "anya-e0602n0:340_0": "Puññakkhettekabhūtaṁ sugatamavirataṁ sādhu vandantu santo.",
  "anya-e0602n0:341_0": "76.",
  "anya-e0602n0:342_0": " Khettavaraṅgatatthutipure javapaṇama tejasā idha bhave,",
  "anya-e0602n0:343_0": "Rogabhayādyupaddavahato anunasukha bhogapuññamatiko;",
  "anya-e0602n0:344_0": "Devamanussabhogapavaraṁ paratthanubhāvañca antimabhave,",
  "anya-e0602n0:345_0": "Aññataro tibodhipavare bhavissati yathāsayaṁ katanato.",
  "anya-e0602n0:346_0": "77.",
  "anya-e0602n0:347_0": " Puññenānena sohaṁ nipuṇajavamati pemavāco sakhīlo,",
  "anya-e0602n0:348_0": "Saddho kalyāṇamittotisaraṇagamano sīlavā cāgayogo;",
  "anya-e0602n0:349_0": "Hirottappī sudakkho avitasucarito dhitimā saccabhāṇī,",
  "anya-e0602n0:350_0": "Bāhussacci vibhāgi saparahitakaro vaggurāvo bhirupo.",
  "anya-e0602n0:351_0": "78.",
  "anya-e0602n0:352_0": " Dīghajjīvi nirogo sucikulapassuto dhammaratto viratto,",
  "anya-e0602n0:353_0": "Niccāpalyo kataññu atimudujumano sādhubhāvādiviññū;",
  "anya-e0602n0:354_0": "Dhammājīvo bhaveyyaṁ bahukusalarato appakodho aluddho,",
  "anya-e0602n0:355_0": "Evañcaññaṁ kareyyaṁ paṇidhi carimake mokkhanibbānabhāgī.",
  "anya-e0602n0:356_0": "79.",
  "anya-e0602n0:357_0": " (1) Mahākathaṁ buddhaghoso, tanumeva karaṁapi;",
  "anya-e0602n0:358_0": "Cajaṁ heyyā diyā deyyaṁ, akarittha yathā tathā.",
  "anya-e0602n0:359_0": "80.",
  "anya-e0602n0:360_0": " (2) Mahāpaṇāmaporāṇaṁ, kiñci eva punappunaṁ;",
  "anya-e0602n0:361_0": "Kāmokkamaṁ dudhārañca, cajaṁ deyyā diyaññattha.",
  "anya-e0602n0:362_0": "81.",
  "anya-e0602n0:363_0": " (3) Sutajjaya anubhava-ṭṭhapanatthena lañchinā;",
  "anya-e0602n0:364_0": "Sutena garunānena, katoyaṁ paṇāmo navo.",
  "anya-e0602n0:365_0": "82.",
  "anya-e0602n0:366_0": " (4) Ekakkharāya gāthāyo, yāva chabbisatakkharā;",
  "anya-e0602n0:367_0": "Jātiya pajjasattatyā, saṅkhato caturādhikā.",
  "anya-e0602n0:368_0": "83.",
  "anya-e0602n0:369_0": " (5) Aṭṭhādhikā sahevuyyo- janādīhi midaṁ nataṁ;",
  "anya-e0602n0:370_0": "Yathāvuttatthakā kāmā, ye niccaṁ dhārayantu te.",
  "anya-e0602n0:371_0": "84.",
  "anya-e0602n0:372_0": " Rājātirājātimanoharo yo,",
  "anya-e0602n0:373_0": "Devātidevātiguṇoghadhārī;",
  "anya-e0602n0:374_0": "Brahmātibrahmātibhavantagū taṁ,",
  "anya-e0602n0:375_0": "Saṅghātisaṅghātivirāva vande.",
  "anya-e0602n0:376_0": "85.",
  "anya-e0602n0:377_0": " Anaṅganaṅgaṁ naradevadevaṁ,",
  "anya-e0602n0:378_0": "Aniñjaniñjaṁ bhayatāṇatāṇaṁ;",
  "anya-e0602n0:379_0": "Anaṇḍanaṇḍañca anāthanāthaṁ,",
  "anya-e0602n0:380_0": "Khayantayantaṁ paṇamāmi māmi.",
  "anya-e0602n0:381_0": "86.",
  "anya-e0602n0:382_0": " Tambasiniddhatuṅganakhako nuṁvaṭṭasucituraṅguli ca muniso,",
  "anya-e0602n0:383_0": "Sīhusabhobhahaṁsasamago nigūḷasama gopphakāyatamukho;",
  "anya-e0602n0:384_0": "Komaladakkhāṇāvaṭatanuruho sucimalujjalābhasariro,",
  "anya-e0602n0:385_0": "Pañcapasādayuttanayano sugandhamukhatuṅganāsikayuto.",
  "anya-e0602n0:386_0": "87.",
  "anya-e0602n0:387_0": " Koṭisahassanāgabaliko surattamadharo suvaṭṭadasano,",
  "anya-e0602n0:388_0": "Āyatasaṇulomabhamūko muduttanukaratta jivhasahito;",
  "anya-e0602n0:389_0": "Chattasamānasobhaṇasiro sukesavara ketumālavicito,",
  "anya-e0602n0:390_0": "Iccanubyañjanebhi sahitaṁ munindapavaraṁ namāmi sirasā.",
  "anya-e0602n0:391_0": "88.",
  "anya-e0602n0:392_0": " Sakalamalehi so muni sudūratāya ca malāriniṁ hatatayā,",
  "anya-e0602n0:393_0": "Tibhavarathe samānitamanārakāni ca namālayo naravaro;",
  "anya-e0602n0:394_0": "Malakaraṇe rahāraha manantañeyya mabhijānanā muni tathā,",
  "anya-e0602n0:395_0": "Caraṇayuto tivijji ca suvācatā sugamanā janesu sugato.",
  "anya-e0602n0:396_0": "89.",
  "anya-e0602n0:397_0": " Lokavidū so nitalokatayatā sākalato asamanaradamā so,",
  "anya-e0602n0:398_0": "Sārathi jino anusāsanakaro satthavaho dupathataraṇasattā;",
  "anya-e0602n0:399_0": "Bujjhati sāmaṁ catusaccamakhilaṁ bodhayi jantugaṇamiti ca buddho,",
  "anya-e0602n0:400_0": "Bhākaraābhāphuṭapaṅkajasamo maggiyañāṇaphuvikasito ca.",
  "anya-e0602n0:401_0": "90.",
  "anya-e0602n0:402_0": " Bhaggakileso so bhagavā tibhava vamita gamana sujana bhajanato,",
  "anya-e0602n0:403_0": "So bhaji saddhamme pavibhatta sarasa chabhagayuta garukaraṇiyato;",
  "anya-e0602n0:404_0": "Sattanikāye kenapitulyaguṇamapamita sirighaṁnajutisusubhaṁ,",
  "anya-e0602n0:405_0": "Devanarānaṁ ekapatiṭṭha mavitathutiyasa masaki mabhaṁname.",
  "anya-e0602n0:406_0": "91.",
  "anya-e0602n0:407_0": " Buddhuppādo kimmaṅgaṁ bho atidulabhataramidha bhave sughosa mapāparo,",
  "anya-e0602n0:408_0": "Tasmā patthentā sabbaññuṁ vividhahitasukha manadhikaṁ namantu ca sādhavo;",
  "anya-e0602n0:409_0": "Puññenānenete diṭṭhe bhayaaghaṁpīḷanaṭṭha virahitā parattha cubho subhe,",
  "anya-e0602n0:410_0": "Bhutvānante ve hessante avikalasukhasirimatikā anuttara bhāgino.",
  "anya-e0602n0:411_0": "92.",
  "anya-e0602n0:412_0": " So cakkopetapādo mudubhujacaraṇo suppatiṭṭhitapādo,",
  "anya-e0602n0:413_0": "Eṇījaṅgho ca buddho kanakanibhataco āyatapaṇhi nātho;",
  "anya-e0602n0:414_0": "Kosonaddhaṅgajāto atisudhumachavī jālikappānaheṭṭhā,",
  "anya-e0602n0:415_0": "Ussaṅkhapādayutto abhinilanayano āyataṅguliyogo.",
  "anya-e0602n0:416_0": "93.",
  "anya-e0602n0:417_0": " Ṭhito kho no namanto kirubhayaputhunājāṇuyo āmasanto,",
  "anya-e0602n0:418_0": "Lomakūpekekalomo samataladasano añjanuddhaggalomo;",
  "anya-e0602n0:419_0": "Brahmaddehujjugatto aviraḷamukhato sattakaṅgussado so,",
  "anya-e0602n0:420_0": "Nigrodhappāribimbo migapatihanuko sīhapubbaḍḍhakāyo.",
  "anya-e0602n0:421_0": "94.",
  "anya-e0602n0:422_0": " Puṇṇattālīsadanto supahutarasano sobhaṇodātadāṭho,",
  "anya-e0602n0:423_0": "Saṇhodātuṇṇalomo samavaṭalagalo antaraṁsapiṇo so;",
  "anya-e0602n0:424_0": "Brahmagghoso munindo punapi gupakhumo uṇhisasamphullasīso,",
  "anya-e0602n0:425_0": "Bāttiṁsaṅgopasobhaṁ mudurasahaṇī lokajeṭṭhaṁ name taṁ.",
  "anya-e0602n0:426_0": "Mahāpaṇāma niṭṭhitā."
}