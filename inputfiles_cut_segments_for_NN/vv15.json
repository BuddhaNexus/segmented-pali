{
  "vv15:0.1_0": "Vimānavatthu",
  "vv15:0.2_0": "Itthivimāna",
  "vv15:0.3_0": "Pīṭhavagga",
  "vv15:0.4_0": "15. Uttarāvimānavatthu",
  "vv15:1.1_0": "“Abhikkantena vaṇṇena,",
  "vv15:1.2_0": "yā tvaṁ tiṭṭhasi devate;",
  "vv15:1.3_0": "Obhāsentī disā sabbā,",
  "vv15:1.4_0": "osadhī viya tārakā.",
  "vv15:2.1_0": "Kena tetādiso vaṇṇo,",
  "vv15:2.2_0": "kena te idha mijjhati;",
  "vv15:2.3_0": "Uppajjanti ca te bhogā,",
  "vv15:2.4_0": "ye keci manaso piyā.",
  "vv15:3.1_0": "Pucchāmi taṁ devi mahānubhāve,",
  "vv15:3.2_0": "Manussabhūtā kimakāsi puññaṁ;",
  "vv15:3.3_0": "Kenāsi evaṁ jalitānubhāvā,",
  "vv15:3.4_0": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv15:4.1_0": "Sā devatā attamanā,",
  "vv15:4.2_0": "moggallānena pucchitā;",
  "vv15:4.3_0": "Pañhaṁ puṭṭhā viyākāsi,",
  "vv15:4.4_0": "yassa kammassidaṁ phalaṁ.",
  "vv15:5.1_0": "“Issā ca maccheramatho paḷāso,",
  "vv15:5.2_0": "Nāhosi mayhaṁ gharamāvasantiyā;",
  "vv15:5.3_0": "Akkodhanā bhattu vasānuvattinī,",
  "vv15:5.4_0": "Uposathe niccahamappamattā.",
  "vv15:6.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "vv15:6.2_0": "yā ca pakkhassa aṭṭhamī;",
  "vv15:6.3_0": "Pāṭihāriyapakkhañca,",
  "vv15:6.4_0": "aṭṭhaṅgasusamāgataṁ.",
  "vv15:7.1_0": "Uposathaṁ upavasissaṁ,",
  "vv15:7.2_0": "sadā sīlesu saṁvutā;",
  "vv15:7.3_0": "Saññamā saṁvibhāgā ca,",
  "vv15:7.4_0": "vimānaṁ āvasāmahaṁ.",
  "vv15:8.1_0": "Pāṇātipātā viratā,",
  "vv15:8.2_0": "musāvādā ca saññatā;",
  "vv15:8.3_0": "Theyyā ca aticārā ca,",
  "vv15:8.4_0": "majjapānā ca ārakā.",
  "vv15:9.1_0": "Pañcasikkhāpade ratā,",
  "vv15:9.2_0": "ariyasaccāna kovidā;",
  "vv15:9.3_0": "Upāsikā cakkhumato,",
  "vv15:9.4_0": "gotamassa yasassino.",
  "vv15:10.1_0": "Sāhaṁ sakena sīlena,",
  "vv15:10.2_0": "yasasā ca yasassinī;",
  "vv15:10.3_0": "Anubhomi sakaṁ puññaṁ,",
  "vv15:10.4_0": "sukhitā camhināmayā.",
  "vv15:11.1_0": "Tena metādiso vaṇṇo,",
  "vv15:11.2_0": "tena me idha mijjhati;",
  "vv15:11.3_0": "Uppajjanti ca me bhogā,",
  "vv15:11.4_0": "ye keci manaso piyā.",
  "vv15:12.1_0": "Akkhāmi te bhikkhu mahānubhāva,",
  "vv15:12.2_0": "Manussabhūtā yamahaṁ akāsiṁ;",
  "vv15:12.3_0": "Tenamhi evaṁ jalitānubhāvā,",
  "vv15:12.4_0": "Vaṇṇo ca me sabbadisā pabhāsatīti.",
  "vv15:13.1_0": "Mama ca, bhante,",
  "vv15:13.1_1": "vacanena bhagavato pāde sirasā vandeyyāsi—",
  "vv15:13.2_0": "‘uttarā nāma, bhante,",
  "vv15:13.2_1": "upāsikā bhagavato pāde sirasā vandatī’ti.",
  "vv15:13.3_0": "Anacchariyaṁ kho panetaṁ, bhante,",
  "vv15:13.3_1": "yaṁ maṁ bhagavā aññatarasmiṁ sāmaññaphale byākareyya,",
  "vv15:13.3_2": "taṁ bhagavā sakadāgāmiphale byākāsī”ti.",
  "vv15:14.1_0": "Uttarāvimānaṁ pannarasamaṁ."
}