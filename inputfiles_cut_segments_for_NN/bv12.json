{
  "bv12:0.1_0": "Buddhavaṁsa",
  "bv12:0.2_0": "12. Padumuttarabuddhavaṁsa",
  "bv12:1.1_0": "“Nāradassa aparena,",
  "bv12:1.2_0": "sambuddho dvipaduttamo;",
  "bv12:1.3_0": "Padumuttaro nāma jino,",
  "bv12:1.4_0": "akkhobbho sāgarūpamo.",
  "bv12:2.1_0": "Maṇḍakappova so āsi,",
  "bv12:2.2_0": "yamhi buddho ajāyatha;",
  "bv12:2.3_0": "Ussannakusalā janatā,",
  "bv12:2.4_0": "tamhi kappe ajāyatha.",
  "bv12:3.1_0": "Padumuttarassa bhagavato,",
  "bv12:3.2_0": "Paṭhame dhammadesane;",
  "bv12:3.3_0": "Koṭisatasahassānaṁ,",
  "bv12:3.4_0": "Dhammābhisamayo ahu.",
  "bv12:4.1_0": "Tato parampi vassante,",
  "bv12:4.2_0": "Tappayante ca pāṇine;",
  "bv12:4.3_0": "Sattatiṁsasatasahassānaṁ,",
  "bv12:4.4_0": "Dutiyābhisamayo ahu.",
  "bv12:5.1_0": "Yamhi kāle mahāvīro,",
  "bv12:5.2_0": "ānandaṁ upasaṅkami;",
  "bv12:5.3_0": "Pitusantikaṁ upagantvā,",
  "bv12:5.4_0": "āhanī amatadundubhiṁ.",
  "bv12:6.1_0": "Āhate amatabherimhi,",
  "bv12:6.2_0": "vassante dhammavuṭṭhiyā;",
  "bv12:6.3_0": "Paññāsasatasahassānaṁ,",
  "bv12:6.4_0": "tatiyābhisamayo ahu.",
  "bv12:7.1_0": "Ovādako viññāpako,",
  "bv12:7.2_0": "tārako sabbapāṇinaṁ;",
  "bv12:7.3_0": "Desanākusalo buddho,",
  "bv12:7.4_0": "tāresi janataṁ bahuṁ.",
  "bv12:8.1_0": "Sannipātā tayo āsuṁ,",
  "bv12:8.2_0": "padumuttarassa satthuno;",
  "bv12:8.3_0": "Koṭisatasahassānaṁ,",
  "bv12:8.4_0": "paṭhamo āsi samāgamo.",
  "bv12:9.1_0": "Yadā buddho asamasamo,",
  "bv12:9.2_0": "vasi vebhārapabbate;",
  "bv12:9.3_0": "Navutikoṭisahassānaṁ,",
  "bv12:9.4_0": "dutiyo āsi samāgamo.",
  "bv12:10.1_0": "Puna cārikaṁ pakkante,",
  "bv12:10.2_0": "gāmanigamaraṭṭhato;",
  "bv12:10.3_0": "Asītikoṭisahassānaṁ,",
  "bv12:10.4_0": "tatiyo āsi samāgamo.",
  "bv12:11.1_0": "Ahaṁ tena samayena,",
  "bv12:11.2_0": "Jaṭilo nāma raṭṭhiko;",
  "bv12:11.3_0": "Sambuddhappamukhaṁ saṅghaṁ,",
  "bv12:11.4_0": "Sabhattaṁ dussamadāsahaṁ.",
  "bv12:12.1_0": "Sopi maṁ buddho byākāsi,",
  "bv12:12.2_0": "saṅghamajjhe nisīdiya;",
  "bv12:12.3_0": "‘Satasahassito kappe,",
  "bv12:12.4_0": "ayaṁ buddho bhavissati.",
  "bv12:13.1_0": "Padhānaṁ padahitvāna,",
  "bv12:13.2_0": "…pe…",
  "bv12:13.3_0": "hessāma sammukhā imaṁ’.",
  "bv12:14.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv12:14.2_0": "uttariṁ vatamadhiṭṭhahiṁ;",
  "bv12:14.3_0": "Akāsiṁ uggadaḷhaṁ dhitiṁ,",
  "bv12:14.4_0": "dasapāramipūriyā.",
  "bv12:15.1_0": "Byāhatā titthiyā sabbe,",
  "bv12:15.2_0": "Vimanā dummanā tadā;",
  "bv12:15.3_0": "Na tesaṁ keci paricaranti,",
  "bv12:15.4_0": "Raṭṭhato nicchubhanti te.",
  "bv12:16.1_0": "Sabbe tattha samāgantvā,",
  "bv12:16.2_0": "upagacchuṁ buddhasantike;",
  "bv12:16.3_0": "Tuvaṁ nātho mahāvīra,",
  "bv12:16.4_0": "saraṇaṁ hohi cakkhuma.",
  "bv12:17.1_0": "Anukampako kāruṇiko,",
  "bv12:17.2_0": "hitesī sabbapāṇinaṁ;",
  "bv12:17.3_0": "Sampatte titthiye sabbe,",
  "bv12:17.4_0": "pañcasīle patiṭṭhapi.",
  "bv12:18.1_0": "Evaṁ nirākulaṁ āsi,",
  "bv12:18.2_0": "suññataṁ titthiyehi taṁ;",
  "bv12:18.3_0": "Vicittaṁ arahantehi,",
  "bv12:18.4_0": "vasībhūtehi tādihi.",
  "bv12:19.1_0": "Nagaraṁ haṁsavatī nāma,",
  "bv12:19.2_0": "ānando nāma khattiyo;",
  "bv12:19.3_0": "Sujātā nāma janikā,",
  "bv12:19.4_0": "padumuttarassa satthuno.",
  "bv12:20.1_0": "Dasavassasahassāni,",
  "bv12:20.2_0": "Agāraṁ ajjha so vasi;",
  "bv12:20.3_0": "Naravāhano yaso vasavattī,",
  "bv12:20.4_0": "Tayo pāsādamuttamā.",
  "bv12:21.1_0": "Ticattārīsasahassāni,",
  "bv12:21.2_0": "nāriyo samalaṅkatā;",
  "bv12:21.3_0": "Vasudattā nāma nārī,",
  "bv12:21.4_0": "uttamo nāma atrajo.",
  "bv12:22.1_0": "Nimitte caturo disvā,",
  "bv12:22.2_0": "pāsādenābhinikkhami;",
  "bv12:22.3_0": "Sattāhaṁ padhānacāraṁ,",
  "bv12:22.4_0": "acarī purisuttamo.",
  "bv12:23.1_0": "Brahmunā yācito santo,",
  "bv12:23.2_0": "padumuttaro vināyako;",
  "bv12:23.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv12:23.4_0": "mithiluyyānamuttame.",
  "bv12:24.1_0": "Devalo ca sujāto ca,",
  "bv12:24.2_0": "Ahesuṁ aggasāvakā;",
  "bv12:24.3_0": "Sumano nāmupaṭṭhāko,",
  "bv12:24.4_0": "Padumuttarassa mahesino.",
  "bv12:25.1_0": "Amitā ca asamā ca,",
  "bv12:25.2_0": "ahesuṁ aggasāvikā;",
  "bv12:25.3_0": "Bodhi tassa bhagavato,",
  "bv12:25.4_0": "salaloti pavuccati.",
  "bv12:26.1_0": "Vitiṇṇo ceva tisso ca,",
  "bv12:26.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv12:26.3_0": "Haṭṭhā ceva vicittā ca,",
  "bv12:26.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv12:27.1_0": "Aṭṭhapaṇṇāsaratanaṁ,",
  "bv12:27.2_0": "accuggato mahāmuni;",
  "bv12:27.3_0": "Kañcanagghiyasaṅkāso,",
  "bv12:27.4_0": "dvattiṁsavaralakkhaṇo.",
  "bv12:28.1_0": "Kuṭṭā kavāṭā bhittī ca,",
  "bv12:28.2_0": "rukkhā nagasiluccayā;",
  "bv12:28.3_0": "Na tassāvaraṇaṁ atthi,",
  "bv12:28.4_0": "samantā dvādasayojane.",
  "bv12:29.1_0": "Vassasatasahassāni,",
  "bv12:29.2_0": "āyu vijjati tāvade;",
  "bv12:29.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv12:29.4_0": "tāresi janataṁ bahuṁ.",
  "bv12:30.1_0": "Santāretvā bahujanaṁ,",
  "bv12:30.2_0": "chinditvā sabbasaṁsayaṁ;",
  "bv12:30.3_0": "Jalitvā aggikkhandhova,",
  "bv12:30.4_0": "nibbuto so sasāvako.",
  "bv12:31.1_0": "Padumuttaro jino buddho,",
  "bv12:31.2_0": "Nandārāmamhi nibbuto;",
  "bv12:31.3_0": "Tatthevassa thūpavaro,",
  "bv12:31.4_0": "Dvādasubbedhayojano”ti. ",
  "bv12:32.1_0": "Padumuttarassa bhagavato vaṁso dasamo."
}