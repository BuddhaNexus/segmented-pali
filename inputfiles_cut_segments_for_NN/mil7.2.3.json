{
  "mil7.2.3:0.1_0": "Milindapañha",
  "mil7.2.3:0.2_0": "Opammakathāpañha",
  "mil7.2.3:0.3_0": "Gadrabhavagga",
  "mil7.2.3:0.4_0": "3. Kalandakaṅgapañha",
  "mil7.2.3:1.1_0": "“Bhante nāgasena,",
  "mil7.2.3:1.1_1": "‘kalandakassa ekaṁ aṅgaṁ gahetabban’ti yaṁ vadesi,",
  "mil7.2.3:1.1_2": "katamaṁ taṁ ekaṁ aṅgaṁ gahetabban”ti?",
  "mil7.2.3:1.2_0": "“Yathā, mahārāja,",
  "mil7.2.3:1.2_1": "kalandako paṭisattumhi opatante naṅguṭṭhaṁ papphoṭetvā mahantaṁ katvā teneva naṅguṭṭhalaguḷena paṭisattuṁ paṭibāhati;",
  "mil7.2.3:1.3_0": "evameva kho, mahārāja,",
  "mil7.2.3:1.3_1": "yoginā yogāvacarena kilesasattumhi opatante satipaṭṭhānalaguḷaṁ papphoṭetvā mahantaṁ katvā teneva satipaṭṭhānalaguḷena sabbakilesā paṭibāhitabbā.",
  "mil7.2.3:1.4_0": "Idaṁ, mahārāja,",
  "mil7.2.3:1.4_1": "kalandakassa ekaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.2.3:1.5_0": "Bhāsitampetaṁ, mahārāja, therena cūḷapanthakena—",
  "mil7.2.3:2.1_0": "‘Yadā kilesā opatanti,",
  "mil7.2.3:2.2_0": "sāmaññaguṇadhaṁsanā;",
  "mil7.2.3:2.3_0": "Satipaṭṭhānalaguḷena,",
  "mil7.2.3:2.4_0": "hantabbā te punappunan’”ti.",
  "mil7.2.3:3.1_0": "Kalandakaṅgapañho tatiyo."
}