{
  "pv38:0.1_0": "Petavatthu",
  "pv38:0.2_0": "Mahāvagga",
  "pv38:0.3_0": "3. Nandakapetavatthu",
  "pv38:1.1_0": "Rājā piṅgalako nāma,",
  "pv38:1.2_0": "Suraṭṭhānaṁ adhipati ahu;",
  "pv38:1.3_0": "Moriyānaṁ upaṭṭhānaṁ gantvā,",
  "pv38:1.4_0": "Suraṭṭhaṁ punarāgamā.",
  "pv38:2.1_0": "Uṇhe majjhanhike kāle,",
  "pv38:2.2_0": "Rājā paṅkaṁ upāgami;",
  "pv38:2.3_0": "Addasa maggaṁ ramaṇīyaṁ,",
  "pv38:2.4_0": "Petānaṁ taṁ vaṇṇupathaṁ.",
  "pv38:3.1_0": "Sārathiṁ āmantayī rājā—",
  "pv38:4.1_0": "“Ayaṁ maggo ramaṇīyo,",
  "pv38:4.2_0": "khemo sovatthiko sivo;",
  "pv38:4.3_0": "Iminā sārathi yāma,",
  "pv38:4.4_0": "suraṭṭhānaṁ santike ito”.",
  "pv38:5.1_0": "Tena pāyāsi soraṭṭho,",
  "pv38:5.2_0": "senāya caturaṅginiyā;",
  "pv38:5.3_0": "Ubbiggarūpo puriso,",
  "pv38:5.4_0": "soraṭṭhaṁ etadabravi.",
  "pv38:6.1_0": "“Kummaggaṁ paṭipannamhā,",
  "pv38:6.2_0": "bhiṁsanaṁ lomahaṁsanaṁ;",
  "pv38:6.3_0": "Purato dissati maggo,",
  "pv38:6.4_0": "pacchato ca na dissati.",
  "pv38:7.1_0": "Kummaggaṁ paṭipannamhā,",
  "pv38:7.2_0": "yamapurisāna santike;",
  "pv38:7.3_0": "Amānuso vāyati gandho,",
  "pv38:7.4_0": "ghoso suyyati dāruṇo”.",
  "pv38:8.1_0": "Saṁviggo rājā soraṭṭho,",
  "pv38:8.2_0": "sārathiṁ etadabravi;",
  "pv38:8.3_0": "“Kummaggaṁ paṭipannamhā,",
  "pv38:8.4_0": "bhiṁsanaṁ lomahaṁsanaṁ;",
  "pv38:8.5_0": "Purato dissati maggo,",
  "pv38:8.6_0": "pacchato ca na dissati.",
  "pv38:9.1_0": "Kummaggaṁ paṭipannamhā,",
  "pv38:9.2_0": "yamapurisāna santike;",
  "pv38:9.3_0": "Amānuso vāyati gandho,",
  "pv38:9.4_0": "ghoso suyyati dāruṇo”.",
  "pv38:10.1_0": "Hatthikkhandhaṁ samāruyha,",
  "pv38:10.2_0": "Olokento catuddisaṁ;",
  "pv38:10.3_0": "Addasa nigrodhaṁ ramaṇīyaṁ,",
  "pv38:10.4_0": "Pādapaṁ chāyāsampannaṁ;",
  "pv38:10.5_0": "Nīlabbhavaṇṇasadisaṁ,",
  "pv38:10.6_0": "Meghavaṇṇasirīnibhaṁ.",
  "pv38:11.1_0": "Sārathiṁ āmantayī rājā,",
  "pv38:11.2_0": "“kiṁ eso dissati brahā;",
  "pv38:11.3_0": "Nīlabbhavaṇṇasadiso,",
  "pv38:11.4_0": "meghavaṇṇasirīnibho”.",
  "pv38:12.1_0": "“Nigrodho so mahārāja,",
  "pv38:12.2_0": "pādapo chāyāsampanno;",
  "pv38:12.3_0": "Nīlabbhavaṇṇasadiso,",
  "pv38:12.4_0": "meghavaṇṇasirīnibho”.",
  "pv38:13.1_0": "Tena pāyāsi soraṭṭho,",
  "pv38:13.2_0": "yena so dissate brahā;",
  "pv38:13.3_0": "Nīlabbhavaṇṇasadiso,",
  "pv38:13.4_0": "meghavaṇṇasirīnibho.",
  "pv38:14.1_0": "Hatthikkhandhato oruyha,",
  "pv38:14.2_0": "rājā rukkhaṁ upāgami;",
  "pv38:14.3_0": "Nisīdi rukkhamūlasmiṁ,",
  "pv38:14.4_0": "sāmacco saparijjano;",
  "pv38:14.5_0": "Pūraṁ pānīyasarakaṁ,",
  "pv38:14.6_0": "pūve vitte ca addasa.",
  "pv38:15.1_0": "Puriso ca devavaṇṇī,",
  "pv38:15.2_0": "sabbābharaṇabhūsito;",
  "pv38:15.3_0": "Upasaṅkamitvā rājānaṁ,",
  "pv38:15.4_0": "soraṭṭhaṁ etadabravi.",
  "pv38:16.1_0": "“Svāgataṁ te mahārāja,",
  "pv38:16.2_0": "atho te adurāgataṁ;",
  "pv38:16.3_0": "Pivatu devo pānīyaṁ,",
  "pv38:16.4_0": "pūve khāda arindama”.",
  "pv38:17.1_0": "Pivitvā rājā pānīyaṁ,",
  "pv38:17.2_0": "sāmacco saparijjano;",
  "pv38:17.3_0": "Pūve khāditvā pitvā ca,",
  "pv38:17.4_0": "soraṭṭho etadabravi.",
  "pv38:18.1_0": "“Devatā nusi gandhabbo,",
  "pv38:18.2_0": "adu sakko purindado;",
  "pv38:18.3_0": "Ajānantā taṁ pucchāma,",
  "pv38:18.4_0": "kathaṁ jānemu taṁ mayan”ti.",
  "pv38:19.1_0": "“Nāmhi devo na gandhabbo,",
  "pv38:19.2_0": "nāpi sakko purindado;",
  "pv38:19.3_0": "Peto ahaṁ mahārāja,",
  "pv38:19.4_0": "suraṭṭhā idha māgato”ti.",
  "pv38:20.1_0": "“Kiṁsīlo kiṁsamācāro,",
  "pv38:20.2_0": "suraṭṭhasmiṁ pure tuvaṁ;",
  "pv38:20.3_0": "Kena te brahmacariyena,",
  "pv38:20.4_0": "ānubhāvo ayaṁ tavā”ti.",
  "pv38:21.1_0": "“Taṁ suṇohi mahārāja,",
  "pv38:21.2_0": "arindama raṭṭhavaḍḍhana;",
  "pv38:21.3_0": "Amaccā pārisajjā ca,",
  "pv38:21.4_0": "brāhmaṇo ca purohito.",
  "pv38:22.1_0": "Suraṭṭhasmiṁ ahaṁ deva,",
  "pv38:22.2_0": "puriso pāpacetaso;",
  "pv38:22.3_0": "Micchādiṭṭhi ca dussīlo,",
  "pv38:22.4_0": "kadariyo paribhāsako.",
  "pv38:23.1_0": "Dadantānaṁ karontānaṁ,",
  "pv38:23.2_0": "vārayissaṁ bahujjanaṁ;",
  "pv38:23.3_0": "Aññesaṁ dadamānānaṁ,",
  "pv38:23.4_0": "antarāyakaro ahaṁ.",
  "pv38:24.1_0": "Vipāko natthi dānassa,",
  "pv38:24.2_0": "saṁyamassa kuto phalaṁ;",
  "pv38:24.3_0": "Natthi ācariyo nāma,",
  "pv38:24.4_0": "adantaṁ ko damessati.",
  "pv38:25.1_0": "Samatulyāni bhūtāni,",
  "pv38:25.2_0": "kuto jeṭṭhāpacāyiko;",
  "pv38:25.3_0": "Natthi balaṁ vīriyaṁ vā,",
  "pv38:25.4_0": "kuto uṭṭhānaporisaṁ.",
  "pv38:26.1_0": "Natthi dānaphalaṁ nāma,",
  "pv38:26.2_0": "na visodheti verinaṁ;",
  "pv38:26.3_0": "Laddheyyaṁ labhate macco,",
  "pv38:26.4_0": "niyatipariṇāmajaṁ.",
  "pv38:27.1_0": "Natthi mātā pitā bhātā,",
  "pv38:27.2_0": "loko natthi ito paraṁ;",
  "pv38:27.3_0": "Natthi dinnaṁ natthi hutaṁ,",
  "pv38:27.4_0": "sunihitaṁ na vijjati.",
  "pv38:28.1_0": "Yopi haneyya purisaṁ,",
  "pv38:28.2_0": "parassa chindate siraṁ;",
  "pv38:28.3_0": "Na koci kañci hanati,",
  "pv38:28.4_0": "sattannaṁ vivaramantare.",
  "pv38:29.1_0": "Acchejjābhejjo hi jīvo,",
  "pv38:29.2_0": "Aṭṭhaṁso guḷaparimaṇḍalo;",
  "pv38:29.3_0": "Yojanānaṁ sataṁ pañca,",
  "pv38:29.4_0": "Ko jīvaṁ chettumarahati.",
  "pv38:30.1_0": "Yathā suttaguḷe khitte,",
  "pv38:30.2_0": "nibbeṭhentaṁ palāyati;",
  "pv38:30.3_0": "Evamevaṁ ca so jīvo,",
  "pv38:30.4_0": "nibbeṭhento palāyati.",
  "pv38:31.1_0": "Yathā gāmato nikkhamma,",
  "pv38:31.2_0": "aññaṁ gāmaṁ pavīsati;",
  "pv38:31.3_0": "Evamevaṁ ca so jīvo,",
  "pv38:31.4_0": "aññaṁ bondiṁ pavīsati.",
  "pv38:32.1_0": "Yathā gehato nikkhamma,",
  "pv38:32.2_0": "aññaṁ gehaṁ pavīsati;",
  "pv38:32.3_0": "Evamevaṁ ca so jīvo,",
  "pv38:32.4_0": "aññaṁ bondiṁ pavīsati.",
  "pv38:33.1_0": "Cullāsīti mahākappino,",
  "pv38:33.2_0": "satasahassāni hi;",
  "pv38:33.3_0": "Ye bālā ye ca paṇḍitā,",
  "pv38:33.4_0": "saṁsāraṁ khepayitvāna;",
  "pv38:33.5_0": "Dukkhassantaṁ karissare.",
  "pv38:34.1_0": "Mitāni sukhadukkhāni,",
  "pv38:34.2_0": "doṇehi piṭakehi ca;",
  "pv38:34.3_0": "Jino sabbaṁ pajānāti,",
  "pv38:34.4_0": "sammūḷhā itarā pajā.",
  "pv38:35.1_0": "Evaṁdiṭṭhi pure āsiṁ,",
  "pv38:35.2_0": "sammūḷho mohapāruto;",
  "pv38:35.3_0": "Micchādiṭṭhi ca dussīlo,",
  "pv38:35.4_0": "kadariyo paribhāsako.",
  "pv38:36.1_0": "Oraṁ me chahi māsehi,",
  "pv38:36.2_0": "kālakiriyā bhavissati;",
  "pv38:36.3_0": "Ekantakaṭukaṁ ghoraṁ,",
  "pv38:36.4_0": "nirayaṁ papatissahaṁ.",
  "pv38:37.1_0": "Catukkaṇṇaṁ catudvāraṁ,",
  "pv38:37.2_0": "vibhattaṁ bhāgaso mitaṁ;",
  "pv38:37.3_0": "Ayopākārapariyantaṁ,",
  "pv38:37.4_0": "ayasā paṭikujjitaṁ.",
  "pv38:38.1_0": "Tassa ayomayā bhūmi,",
  "pv38:38.2_0": "jalitā tejasā yutā;",
  "pv38:38.3_0": "Samantā yojanasataṁ,",
  "pv38:38.4_0": "pharitvā tiṭṭhati sabbadā.",
  "pv38:39.1_0": "Vassāni satasahassāni,",
  "pv38:39.2_0": "ghoso suyyati tāvade;",
  "pv38:39.3_0": "Lakkho eso mahārāja,",
  "pv38:39.4_0": "satabhāgavassakoṭiyo.",
  "pv38:40.1_0": "Koṭisatasahassāni,",
  "pv38:40.2_0": "niraye paccare janā;",
  "pv38:40.3_0": "Micchādiṭṭhī ca dussīlā,",
  "pv38:40.4_0": "ye ca ariyūpavādino.",
  "pv38:41.1_0": "Tatthāhaṁ dīghamaddhānaṁ,",
  "pv38:41.2_0": "dukkhaṁ vedissa vedanaṁ;",
  "pv38:41.3_0": "Phalaṁ pāpassa kammassa,",
  "pv38:41.4_0": "tasmā socāmahaṁ bhusaṁ.",
  "pv38:42.1_0": "Taṁ suṇohi mahārāja,",
  "pv38:42.2_0": "arindama raṭṭhavaḍḍhana;",
  "pv38:42.3_0": "Dhītā mayhaṁ mahārāja,",
  "pv38:42.4_0": "uttarā bhaddamatthu te.",
  "pv38:43.1_0": "Karoti bhaddakaṁ kammaṁ,",
  "pv38:43.2_0": "sīlesuposathe ratā;",
  "pv38:43.3_0": "Saññatā saṁvibhāgī ca,",
  "pv38:43.4_0": "vadaññū vītamaccharā.",
  "pv38:44.1_0": "Akhaṇḍakārī sikkhāya,",
  "pv38:44.2_0": "suṇhā parakulesu ca;",
  "pv38:44.3_0": "Upāsikā sakyamunino,",
  "pv38:44.4_0": "sambuddhassa sirīmato.",
  "pv38:45.1_0": "Bhikkhu ca sīlasampanno,",
  "pv38:45.2_0": "gāmaṁ piṇḍāya pāvisi;",
  "pv38:45.3_0": "Okkhittacakkhu satimā,",
  "pv38:45.4_0": "guttadvāro susaṁvuto.",
  "pv38:46.1_0": "Sapadānaṁ caramāno,",
  "pv38:46.2_0": "agamā taṁ nivesanaṁ;",
  "pv38:46.3_0": "‘Tamaddasa mahārāja,",
  "pv38:46.4_0": "uttarā bhaddamatthu te’.",
  "pv38:47.1_0": "Pūraṁ pānīyasarakaṁ,",
  "pv38:47.2_0": "pūve vitte ca sā adā;",
  "pv38:47.3_0": "‘Pitā me kālakato bhante,",
  "pv38:47.4_0": "tassetaṁ upakappatu’.",
  "pv38:48.1_0": "Samanantarānuddiṭṭhe,",
  "pv38:48.2_0": "vipāko udapajjatha;",
  "pv38:48.3_0": "Bhuñjāmi kāmakāmīhaṁ,",
  "pv38:48.4_0": "rājā vessavaṇo yathā.",
  "pv38:49.1_0": "Taṁ suṇohi mahārāja,",
  "pv38:49.2_0": "arindama raṭṭhavaḍḍhana;",
  "pv38:49.3_0": "Sadevakassa lokassa,",
  "pv38:49.4_0": "buddho aggo pavuccati;",
  "pv38:49.5_0": "Taṁ buddhaṁ saraṇaṁ gaccha,",
  "pv38:49.6_0": "saputtadāro arindama.",
  "pv38:50.1_0": "Aṭṭhaṅgikena maggena,",
  "pv38:50.2_0": "phusanti amataṁ padaṁ;",
  "pv38:50.3_0": "Taṁ dhammaṁ saraṇaṁ gaccha,",
  "pv38:50.4_0": "saputtadāro arindama.",
  "pv38:51.1_0": "Cattāro ca paṭipannā,",
  "pv38:51.2_0": "cattāro ca phale ṭhitā;",
  "pv38:51.3_0": "Esa saṅgho ujubhūto,",
  "pv38:51.4_0": "paññāsīlasamāhito;",
  "pv38:51.5_0": "Taṁ saṅghaṁ saraṇaṁ gaccha,",
  "pv38:51.6_0": "saputtadāro arindama.",
  "pv38:52.1_0": "Pāṇātipātā viramassu khippaṁ,",
  "pv38:52.2_0": "Loke adinnaṁ parivajjayassu;",
  "pv38:52.3_0": "Amajjapo mā ca musā abhāṇi,",
  "pv38:52.4_0": "Sakena dārena ca hohi tuṭṭho”ti.",
  "pv38:53.1_0": "“Atthakāmosi me yakkha,",
  "pv38:53.2_0": "hitakāmosi devate;",
  "pv38:53.3_0": "Karomi tuyhaṁ vacanaṁ,",
  "pv38:53.4_0": "tvaṁsi ācariyo mama.",
  "pv38:54.1_0": "Upemi saraṇaṁ buddhaṁ,",
  "pv38:54.2_0": "dhammañcāpi anuttaraṁ;",
  "pv38:54.3_0": "Saṅghañca naradevassa,",
  "pv38:54.4_0": "gacchāmi saraṇaṁ ahaṁ.",
  "pv38:55.1_0": "Pāṇātipātā viramāmi khippaṁ,",
  "pv38:55.2_0": "Loke adinnaṁ parivajjayāmi;",
  "pv38:55.3_0": "Amajjapo no ca musā bhaṇāmi,",
  "pv38:55.4_0": "Sakena dārena ca homi tuṭṭho.",
  "pv38:56.1_0": "Ophuṇāmi mahāvāte,",
  "pv38:56.2_0": "nadiyā sīghagāmiyā;",
  "pv38:56.3_0": "Vamāmi pāpikaṁ diṭṭhiṁ,",
  "pv38:56.4_0": "buddhānaṁ sāsane rato”.",
  "pv38:57.1_0": "Idaṁ vatvāna soraṭṭho,",
  "pv38:57.2_0": "viramitvā pāpadassanā;",
  "pv38:57.3_0": "Namo bhagavato katvā,",
  "pv38:57.4_0": "pāmokkho rathamāruhīti.",
  "pv38:58.1_0": "Nandakapetavatthu tatiyaṁ."
}