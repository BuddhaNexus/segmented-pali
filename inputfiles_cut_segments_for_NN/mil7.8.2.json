{
  "mil7.8.2:0.1_0": "Milindapañha",
  "mil7.8.2:0.2_0": "Opammakathāpañha",
  "mil7.8.2:0.3_0": "Kumbhavagga",
  "mil7.8.2:0.4_0": "2. Kāḷāyasaṅgapañha",
  "mil7.8.2:1.1_0": "“Bhante nāgasena,",
  "mil7.8.2:1.1_1": "‘kāḷāyasassa dve aṅgāni gahetabbānī’ti yaṁ vadesi,",
  "mil7.8.2:1.1_2": "katamāni tāni dve aṅgāni gahetabbānī”ti?",
  "mil7.8.2:1.2_0": "“Yathā, mahārāja, kāḷāyaso supīto vamati;",
  "mil7.8.2:1.3_0": "evameva kho, mahārāja,",
  "mil7.8.2:1.3_1": "yogino yogāvacarassa mānasaṁ yoniso manasikārena apītaṁ vamati.",
  "mil7.8.2:1.4_0": "Idaṁ, mahārāja,",
  "mil7.8.2:1.4_1": "kāḷāyasassa paṭhamaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.8.2:2.1_0": "Puna caparaṁ, mahārāja,",
  "mil7.8.2:2.1_1": "kāḷāyaso sakiṁ pītaṁ udakaṁ na vamati;",
  "mil7.8.2:2.2_0": "evameva kho, mahārāja,",
  "mil7.8.2:2.2_1": "yoginā yogāvacarena yo sakiṁ uppanno pasādo,",
  "mil7.8.2:2.2_2": "na puna so vamitabbo ‘uḷāro so bhagavā sammāsambuddho, svākkhāto dhammo, suppaṭipanno saṅgho’ti.",
  "mil7.8.2:2.3_0": "‘Rūpaṁ aniccaṁ, vedanā aniccā, saññā aniccā, saṅkhārā aniccā,",
  "mil7.8.2:2.3_1": "viññāṇaṁ aniccan’ti yaṁ sakiṁ uppannaṁ ñāṇaṁ, na puna taṁ vamitabbaṁ.",
  "mil7.8.2:2.4_0": "Idaṁ, mahārāja,",
  "mil7.8.2:2.4_1": "kāḷāyasassa dutiyaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.8.2:2.5_0": "Bhāsitampetaṁ, mahārāja, bhagavatā devātidevena—",
  "mil7.8.2:3.1_0": "‘Dassanamhi parisodhito naro,",
  "mil7.8.2:3.2_0": "Ariyadhamme niyato visesagū;",
  "mil7.8.2:3.3_0": "Nappavedhati anekabhāgaso,",
  "mil7.8.2:3.4_0": "Sabbaso ca mukhabhāvameva so’”ti.",
  "mil7.8.2:4.1_0": "Kāḷāyasaṅgapañho dutiyo."
}