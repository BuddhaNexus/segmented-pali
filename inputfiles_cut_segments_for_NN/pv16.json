{
  "pv16:0.1_0": "Petavatthu",
  "pv16:0.2_0": "Ubbarivagga",
  "pv16:0.3_0": "4. Nandāpetivatthu",
  "pv16:1.1_0": "“Kāḷī dubbaṇṇarūpāsi,",
  "pv16:1.2_0": "pharusā bhīrudassanā;",
  "pv16:1.3_0": "Piṅgalāsi kaḷārāsi,",
  "pv16:1.4_0": "na taṁ maññāmi mānusin”ti.",
  "pv16:2.1_0": "“Ahaṁ nandā nandisena,",
  "pv16:2.2_0": "bhariyā te pure ahuṁ;",
  "pv16:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv16:2.4_0": "petalokaṁ ito gatā”ti.",
  "pv16:3.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv16:3.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv16:3.3_0": "Kissa kammavipākena,",
  "pv16:3.4_0": "petalokaṁ ito gatā”ti.",
  "pv16:4.1_0": "“Caṇḍī ca pharusā cāsiṁ,",
  "pv16:4.2_0": "tayi cāpi agāravā;",
  "pv16:4.3_0": "Tāhaṁ duruttaṁ vatvāna,",
  "pv16:4.4_0": "petalokaṁ ito gatā”ti.",
  "pv16:5.1_0": "“Handuttarīyaṁ dadāmi te,",
  "pv16:5.2_0": "imaṁ dussaṁ nivāsaya;",
  "pv16:5.3_0": "Imaṁ dussaṁ nivāsetvā,",
  "pv16:5.4_0": "ehi nessāmi taṁ gharaṁ.",
  "pv16:6.1_0": "Vatthañca annapānañca,",
  "pv16:6.2_0": "lacchasi tvaṁ gharaṁ gatā;",
  "pv16:6.3_0": "Putte ca te passissasi,",
  "pv16:6.4_0": "suṇisāyo ca dakkhasī”ti.",
  "pv16:7.1_0": "“Hatthena hatthe te dinnaṁ,",
  "pv16:7.2_0": "na mayhaṁ upakappati;",
  "pv16:7.3_0": "Bhikkhū ca sīlasampanne,",
  "pv16:7.4_0": "vītarāge bahussute.",
  "pv16:8.1_0": "Tappehi annapānena,",
  "pv16:8.2_0": "mama dakkhiṇamādisa;",
  "pv16:8.3_0": "Tadāhaṁ sukhitā hessaṁ,",
  "pv16:8.4_0": "sabbakāmasamiddhinī”ti.",
  "pv16:9.1_0": "Sādhūti so paṭissutvā,",
  "pv16:9.2_0": "dānaṁ vipulamākiri;",
  "pv16:9.3_0": "Annaṁ pānaṁ khādanīyaṁ,",
  "pv16:9.4_0": "vatthasenāsanāni ca;",
  "pv16:9.5_0": "Chattaṁ gandhañca mālañca,",
  "pv16:9.6_0": "vividhā ca upāhanā.",
  "pv16:10.1_0": "Bhikkhū ca sīlasampanne,",
  "pv16:10.2_0": "vītarāge bahussute;",
  "pv16:10.3_0": "Tappetvā annapānena,",
  "pv16:10.4_0": "tassā dakkhiṇamādisī.",
  "pv16:11.1_0": "Samanantarānuddiṭṭhe,",
  "pv16:11.2_0": "vipāko udapajjatha;",
  "pv16:11.3_0": "Bhojanacchādanapānīyaṁ,",
  "pv16:11.4_0": "dakkhiṇāya idaṁ phalaṁ.",
  "pv16:12.1_0": "Tato suddhā sucivasanā,",
  "pv16:12.2_0": "kāsikuttamadhārinī;",
  "pv16:12.3_0": "Vicittavatthābharaṇā,",
  "pv16:12.4_0": "sāmikaṁ upasaṅkami.",
  "pv16:13.1_0": "“Abhikkantena vaṇṇena,",
  "pv16:13.2_0": "yā tvaṁ tiṭṭhasi devate;",
  "pv16:13.3_0": "Obhāsentī disā sabbā,",
  "pv16:13.4_0": "osadhī viya tārakā.",
  "pv16:14.1_0": "Kena tetādiso vaṇṇo,",
  "pv16:14.2_0": "kena te idha mijjhati;",
  "pv16:14.3_0": "Uppajjanti ca te bhogā,",
  "pv16:14.4_0": "ye keci manaso piyā.",
  "pv16:15.1_0": "Pucchāmi taṁ devi mahānubhāve,",
  "pv16:15.2_0": "Manussabhūtā kimakāsi puññaṁ;",
  "pv16:15.3_0": "Kenāsi evaṁ jalitānubhāvā,",
  "pv16:15.4_0": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "pv16:16.1_0": "“Ahaṁ nandā nandisena,",
  "pv16:16.2_0": "bhariyā te pure ahuṁ;",
  "pv16:16.3_0": "Pāpakammaṁ karitvāna,",
  "pv16:16.4_0": "petalokaṁ ito gatā.",
  "pv16:17.1_0": "Tava dinnena dānena,",
  "pv16:17.2_0": "modāmi akutobhayā;",
  "pv16:17.3_0": "Ciraṁ jīva gahapati,",
  "pv16:17.4_0": "saha sabbehi ñātibhi;",
  "pv16:17.5_0": "Asokaṁ virajaṁ khemaṁ,",
  "pv16:17.6_0": "āvāsaṁ vasavattinaṁ.",
  "pv16:18.1_0": "Idha dhammaṁ caritvāna,",
  "pv16:18.2_0": "Dānaṁ datvā gahapati;",
  "pv16:18.3_0": "Vineyya maccheramalaṁ samūlaṁ,",
  "pv16:18.4_0": "Anindito saggamupehi ṭhānan”ti.",
  "pv16:19.1_0": "Nandāpetivatthu catutthaṁ."
}