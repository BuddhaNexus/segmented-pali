{
  "tika-s0402t6:0_0": "(7) 2. Sukhavaggavaṇṇanā",
  "tika-s0402t6:1_0": "65.",
  "tika-s0402t6:1_1": "Dutiyassa paṭhame sabbakāmanipphattimūlakaṁ sukhanti anavasesaupabhogaparibhogavatthunipphattihetukaṁ kāmasukhaṁ.",
  "tika-s0402t6:1_2": "Pabbajjāmūlakaṁ sukhanti pabbajjāhetukaṁ pavivekasukhaṁ.",
  "tika-s0402t6:2_0": "66.",
  "tika-s0402t6:2_1": "Dutiye kāmeti pañca kāmaguṇe,",
  "tika-s0402t6:2_2": "sabbepi vā tebhūmake dhamme.",
  "tika-s0402t6:2_3": "Vuttañhetaṁ ‘‘sabbepi tebhūmakā dhammā kamanīyaṭṭhena kāmā’’ti (mahāni. 1).",
  "tika-s0402t6:2_4": "Nekkhammaṁ vuccati pabbajjā gharabandhanato nikkhantattā.",
  "tika-s0402t6:2_5": "Nibbānameva vā –",
  "tika-s0402t6:3_0": "‘‘Pabbajjā paṭhamaṁ jhānaṁ, nibbānañca vipassanā;",
  "tika-s0402t6:4_0": "Sabbepi kusalā dhammā, nekkhammanti pavuccare’’ti. (itivu. aṭṭha. 109) –",
  "tika-s0402t6:5_0": "Hi vuttaṁ.",
  "tika-s0402t6:6_0": "67.",
  "tika-s0402t6:6_1": "Tatiye upadhī vuccanti pañcupādānakkhandhā,",
  "tika-s0402t6:6_2": "tannissitaṁ sukhaṁ upadhisukhaṁ.",
  "tika-s0402t6:6_3": "Tappaṭipakkhato nirupadhisukhaṁ lokuttarasukhaṁ.",
  "tika-s0402t6:7_0": "68. Catutthe vaṭṭapariyāpannaṁ sukhaṁ vaṭṭasukhaṁ. Nibbānārammaṇaṁ sukhaṁ vivaṭṭasukhaṁ.",
  "tika-s0402t6:8_0": "69.",
  "tika-s0402t6:8_1": "Pañcame saṁkilesanti saṁkiliṭṭhaṁ.",
  "tika-s0402t6:8_2": "Tenāha ‘‘vaṭṭagāmisukha’’nti.",
  "tika-s0402t6:8_3": "Vivaṭṭasukhanti maggaphalasahagataṁ sukhaṁ.",
  "tika-s0402t6:9_0": "70.",
  "tika-s0402t6:9_1": "Chaṭṭhe ariyānameva sukhaṁ ariyasukhaṁ,",
  "tika-s0402t6:9_2": "ariyañca taṁ sukhañcātipi ariyasukhaṁ.",
  "tika-s0402t6:9_3": "Anariyānameva sukhaṁ anariyasukhaṁ.",
  "tika-s0402t6:9_4": "Anariyañca taṁ sukhañcātipi anariyasukhaṁ.",
  "tika-s0402t6:10_0": "71. Sattame tanti cetasikasukhaṁ.",
  "tika-s0402t6:11_0": "72.",
  "tika-s0402t6:11_1": "Aṭṭhame saha pītiyā vattatīti sappītikaṁ,",
  "tika-s0402t6:11_2": "pītisahagataṁ sukhaṁ.",
  "tika-s0402t6:11_3": "Sabhāvato virāgato ca natthi etassa pītīti nippītikaṁ sukhaṁ.",
  "tika-s0402t6:11_4": "Aṭṭhakathāyaṁ panettha jhānasukhameva uddhaṭaṁ,",
  "tika-s0402t6:11_5": "tathā ca ‘‘lokiyasappītikasukhato lokiyanippītikasukhaṁ agga’’nti vuttaṁ.",
  "tika-s0402t6:11_6": "Lokiyanippītikampi hi aggaṁ labbhatevāti bhūmantaraṁ bhinditvā aggabhāvo veditabbo.",
  "tika-s0402t6:12_0": "73.",
  "tika-s0402t6:12_1": "Navame sātasabhāvameva sukhaṁ sātasukhaṁ,",
  "tika-s0402t6:12_2": "na upekkhāsukhaṁ viya asātasabhāvaṁ.",
  "tika-s0402t6:12_3": "Kāmañcettha kāyaviññāṇasahagatampi sātasukhameva,",
  "tika-s0402t6:12_4": "aṭṭhakathāyaṁ pana ‘‘tīsu jhānesu sukha’’nteva vuttaṁ.",
  "tika-s0402t6:13_0": "74. Dasame samādhisampayuttaṁ sukhaṁ samādhisukhaṁ. Na samādhisampayuttaṁ sukhaṁ asamādhisukhaṁ.",
  "tika-s0402t6:14_0": "75. Ekādasame suttantakathā esāti ‘‘sappītikaṁ jhānadvaya’’nti vuttaṁ.",
  "tika-s0402t6:15_0": "77.",
  "tika-s0402t6:15_1": "Terasame rūpajjhānaṁ rūpaṁ uttarapadalopena,",
  "tika-s0402t6:15_2": "taṁ ārammaṇaṁ etassāti rūpārammaṇaṁ.",
  "tika-s0402t6:15_3": "Catutthajjhānaggahaṇaṁ pana yadassa paṭiyogī,",
  "tika-s0402t6:15_4": "tena samānayogakkhamadassanaparaṁ.",
  "tika-s0402t6:15_5": "Yaṁ kiñci rūpanti yaṁ kiñci ruppanalakkhaṇaṁ rūpaṁ.",
  "tika-s0402t6:15_6": "Tappaṭikkhepena arūpaṁ veditabbaṁ.",
  "tika-s0402t6:16_0": "Sukhavaggavaṇṇanā niṭṭhitā."
}