{
  "tha-ap408:0.1_0": "Therāpadāna",
  "tha-ap408:0.2_0": "Metteyyavagga",
  "tha-ap408:0.3_0": "6. Nandakattheraapadāna",
  "tha-ap408:1.1_0": "“Migaluddo pure āsiṁ,",
  "tha-ap408:1.2_0": "Araññe kānane ahaṁ;",
  "tha-ap408:1.3_0": "Pasadaṁ migamesanto,",
  "tha-ap408:1.4_0": "Sayambhuṁ addasaṁ ahaṁ.",
  "tha-ap408:2.1_0": "Anuruddho nāma sambuddho,",
  "tha-ap408:2.2_0": "sayambhū aparājito;",
  "tha-ap408:2.3_0": "Vivekakāmo so dhīro,",
  "tha-ap408:2.4_0": "vanamajjhogahī tadā.",
  "tha-ap408:3.1_0": "Catudaṇḍe gahetvāna,",
  "tha-ap408:3.2_0": "catuṭṭhāne ṭhapesahaṁ;",
  "tha-ap408:3.3_0": "Maṇḍapaṁ sukataṁ katvā,",
  "tha-ap408:3.4_0": "padmapupphehi chādayiṁ.",
  "tha-ap408:4.1_0": "Maṇḍapaṁ chādayitvāna,",
  "tha-ap408:4.2_0": "sayambhuṁ abhivādayiṁ;",
  "tha-ap408:4.3_0": "Dhanuṁ tattheva nikkhippa,",
  "tha-ap408:4.4_0": "pabbajiṁ anagāriyaṁ.",
  "tha-ap408:5.1_0": "Naciraṁ pabbajitassa,",
  "tha-ap408:5.2_0": "byādhi me udapajjatha;",
  "tha-ap408:5.3_0": "Pubbakammaṁ saritvāna,",
  "tha-ap408:5.4_0": "tattha kālaṅkato ahaṁ.",
  "tha-ap408:6.1_0": "Pubbakammena saṁyutto,",
  "tha-ap408:6.2_0": "tusitaṁ agamāsahaṁ;",
  "tha-ap408:6.3_0": "Tattha soṇṇamayaṁ byamhaṁ,",
  "tha-ap408:6.4_0": "nibbattati yadicchakaṁ.",
  "tha-ap408:7.1_0": "Sahassayuttaṁ hayavāhiṁ,",
  "tha-ap408:7.2_0": "dibbayānamadhiṭṭhito;",
  "tha-ap408:7.3_0": "Āruhitvāna taṁ yānaṁ,",
  "tha-ap408:7.4_0": "gacchāmahaṁ yadicchakaṁ.",
  "tha-ap408:8.1_0": "Tato me niyyamānassa,",
  "tha-ap408:8.2_0": "devabhūtassa me sato;",
  "tha-ap408:8.3_0": "Samantā yojanasataṁ,",
  "tha-ap408:8.4_0": "maṇḍapo me dharīyati.",
  "tha-ap408:9.1_0": "Sayanehaṁ tuvaṭṭāmi,",
  "tha-ap408:9.2_0": "acchanne pupphasanthate;",
  "tha-ap408:9.3_0": "Antalikkhā ca padumā,",
  "tha-ap408:9.4_0": "vassante niccakālikaṁ.",
  "tha-ap408:10.1_0": "Marīcike phandamāne,",
  "tha-ap408:10.2_0": "tappamāne ca ātape;",
  "tha-ap408:10.3_0": "Na maṁ tāpeti ātāpo,",
  "tha-ap408:10.4_0": "maṇḍapassa idaṁ phalaṁ.",
  "tha-ap408:11.1_0": "Duggatiṁ samatikkanto,",
  "tha-ap408:11.2_0": "apāyā pihitā mama;",
  "tha-ap408:11.3_0": "Maṇḍape rukkhamūle vā,",
  "tha-ap408:11.4_0": "santāpo me na vijjati.",
  "tha-ap408:12.1_0": "Mahīsaññaṁ adhiṭṭhāya,",
  "tha-ap408:12.2_0": "loṇatoyaṁ tarāmahaṁ;",
  "tha-ap408:12.3_0": "Tassa me sukataṁ kammaṁ,",
  "tha-ap408:12.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap408:13.1_0": "Apathampi pathaṁ katvā,",
  "tha-ap408:13.2_0": "gacchāmi anilañjase;",
  "tha-ap408:13.3_0": "Aho me sukataṁ kammaṁ,",
  "tha-ap408:13.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap408:14.1_0": "Pubbenivāsaṁ jānāmi,",
  "tha-ap408:14.2_0": "dibbacakkhu visodhitaṁ;",
  "tha-ap408:14.3_0": "Āsavā me parikkhīṇā,",
  "tha-ap408:14.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap408:15.1_0": "Jahitā purimā jāti,",
  "tha-ap408:15.2_0": "buddhassa oraso ahaṁ;",
  "tha-ap408:15.3_0": "Dāyādomhi ca saddhamme,",
  "tha-ap408:15.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap408:16.1_0": "Ārādhitomhi sugataṁ,",
  "tha-ap408:16.2_0": "Gotamaṁ sakyapuṅgavaṁ;",
  "tha-ap408:16.3_0": "Dhammadhajo dhammadāyādo,",
  "tha-ap408:16.4_0": "Buddhapūjāyidaṁ phalaṁ.",
  "tha-ap408:17.1_0": "Upaṭṭhitvāna sambuddhaṁ,",
  "tha-ap408:17.2_0": "gotamaṁ sakyapuṅgavaṁ;",
  "tha-ap408:17.3_0": "Pāraṅgamaniyaṁ maggaṁ,",
  "tha-ap408:17.4_0": "apucchiṁ lokanāyakaṁ.",
  "tha-ap408:18.1_0": "Ajjhiṭṭho kathayī buddho,",
  "tha-ap408:18.2_0": "gambhīraṁ nipuṇaṁ padaṁ;",
  "tha-ap408:18.3_0": "Tassāhaṁ dhammaṁ sutvāna,",
  "tha-ap408:18.4_0": "pattomhi āsavakkhayaṁ.",
  "tha-ap408:19.1_0": "Aho me sukataṁ kammaṁ,",
  "tha-ap408:19.2_0": "parimuttomhi jātiyā;",
  "tha-ap408:19.3_0": "Sabbāsavaparikkhīṇo,",
  "tha-ap408:19.4_0": "natthi dāni punabbhavo.",
  "tha-ap408:20.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap408:20.2_0": "…pe…",
  "tha-ap408:20.3_0": "viharāmi anāsavo.",
  "tha-ap408:21.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap408:21.2_0": "…pe…",
  "tha-ap408:21.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap408:22.1_0": "Paṭisambhidā catasso,",
  "tha-ap408:22.2_0": "…pe…",
  "tha-ap408:22.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap408:23.1_0": "Itthaṁ sudaṁ āyasmā nandako thero imā gāthāyo abhāsitthāti.",
  "tha-ap408:24.1_0": "Nandakattherassāpadānaṁ chaṭṭhaṁ."
}