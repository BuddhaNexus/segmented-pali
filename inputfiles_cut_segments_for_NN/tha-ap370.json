{
  "tha-ap370:0.1_0": "Therāpadāna",
  "tha-ap370:0.2_0": "Mandāravapupphiyavagga",
  "tha-ap370:0.3_0": "8. Ekacampakapupphiyattheraapadāna",
  "tha-ap370:1.1_0": "“Upasanto ca sambuddho,",
  "tha-ap370:1.2_0": "vasatī pabbatantare;",
  "tha-ap370:1.3_0": "Ekacampakamādāya,",
  "tha-ap370:1.4_0": "upagacchiṁ naruttamaṁ.",
  "tha-ap370:2.1_0": "Pasannacitto sumano,",
  "tha-ap370:2.2_0": "paccekamunimuttamaṁ;",
  "tha-ap370:2.3_0": "Ubhohatthehi paggayha,",
  "tha-ap370:2.4_0": "pūjayiṁ aparājitaṁ.",
  "tha-ap370:3.1_0": "Pañcasaṭṭhimhito kappe,",
  "tha-ap370:3.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap370:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap370:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap370:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap370:4.2_0": "…pe…",
  "tha-ap370:4.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap370:5.1_0": "Itthaṁ sudaṁ āyasmā ekacampakapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap370:6.1_0": "Ekacampakapupphiyattherassāpadānaṁ aṭṭhamaṁ."
}