{
  "anya-e0702n0:0_0": " Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0702n0:1_0": "Sāsanavaṁsappadīpikā",
  "anya-e0702n0:2_0": "Buddhaṁ sumālī dvipaduttamo tamo,",
  "anya-e0702n0:3_0": "Hantvāna bodhesidha paṅkajaṁ kajaṁ;",
  "anya-e0702n0:4_0": "Maggaggaselamhi suñaṭṭhito ṭhito,",
  "anya-e0702n0:5_0": "So maṁ ciraṁ pātu sukhaṁ sadā sadā.",
  "anya-e0702n0:6_0": "Sīhaḷaddīpatoyeva,",
  "anya-e0702n0:7_0": "Āgatehi disantare;",
  "anya-e0702n0:8_0": "Bhikkhūhi yācito kassaṁ,",
  "anya-e0702n0:9_0": "Sāsnavaṁsappadīpikaṁ.",
  "anya-e0702n0:10_0": "Kāmañca porāṇehi yā,",
  "anya-e0702n0:11_0": "Sāsnavaṁsappadipikā;",
  "anya-e0702n0:12_0": "Vitthāra vācanāmaggā,",
  "anya-e0702n0:13_0": "Viracitā vinicchayā.",
  "anya-e0702n0:14_0": "Sā pana mrammasāsāya,",
  "anya-e0702n0:15_0": "Katattāyeva etesaṁ;",
  "anya-e0702n0:16_0": "Dīpantaranivāsinaṁ,",
  "anya-e0702n0:17_0": "Vahāti suṭṭhunātthaṁ.",
  "anya-e0702n0:18_0": "Tasmā hi mūlabhāsāya,",
  "anya-e0702n0:19_0": "Karissāmi ahaṁ have;",
  "anya-e0702n0:20_0": "Saṁsanditvāna ganthehi,",
  "anya-e0702n0:21_0": "Taṁ sallakkhentu sādhavoti.",
  "anya-e0702n0:22_0": "Tatrāyaṁmātikā –",
  "anya-e0702n0:23_0": "1. Navaṭṭhānāgatasāsanavaṁsakathāmaggo,",
  "anya-e0702n0:24_0": "2. Sīhaḷadīpikasāsanavaṁsakathāmaggo,",
  "anya-e0702n0:25_0": "3. Suvaṇṇabhūmisāsanavaṁsakathāmaggo,",
  "anya-e0702n0:26_0": "4. Yonakaraṭṭhasāsanavaṁsakathāmaggo,",
  "anya-e0702n0:27_0": "5. Vanavāsīraṭṭhasāsanavaṁsakathāmaggo,",
  "anya-e0702n0:28_0": "6. Aparantaraṭṭhasāsanavaṁsakathāmaggo,",
  "anya-e0702n0:29_0": "7. Kasmīragandhāraraṭṭhasāsanavaṁsakathāmaggo,",
  "anya-e0702n0:30_0": "8. Mahiṁsakaraṭṭhasāsanavaṁsakathāmaggo,",
  "anya-e0702n0:31_0": "9. Mahāraṭṭhasāsanavaṁsavathāmaggo,",
  "anya-e0702n0:32_0": "10. Cinaraṭṭhasāsanavaṁsakathāmaggocāti."
}