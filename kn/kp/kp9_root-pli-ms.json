{
"kp9:1.1": "Khuddakapāṭha",
"kp9:2.1": "9. Mettasutta",
"kp9:3.1": "Karaṇīyamatthakusalena,",
"kp9:3.2": "Yanta santaṃ padaṃ abhisamecca;",
"kp9:3.3": "Sakko ujū ca suhujū ca,",
"kp9:3.4": "Sūvaco cassa mudu anatimānī.",
"kp9:4.1": "Santussako ca subharo ca,",
"kp9:4.2": "Appakicco ca sallahukavutti;",
"kp9:4.3": "Santindriyo ca nipako ca,",
"kp9:4.4": "Appagabbho kulesvananugiddho.",
"kp9:5.1": "Na ca khuddamācare kiñci,",
"kp9:5.2": "Yena viññū pare upavadeyyuṃ;",
"kp9:5.3": "Sukhino va khemino hontu,",
"kp9:5.4": "Sabbasattā bhavantu sukhitattā.",
"kp9:6.1": "Ye keci pāṇabhūtatthi,",
"kp9:6.2": "Tasā vā thāvarā vanavasesā;",
"kp9:6.3": "Dīghā vā ye va mahantā,",
"kp9:6.4": "Majjhimā rassakā aṇukathūlā.",
"kp9:7.1": "Diṭṭhā vā ye va adiṭṭhā,",
"kp9:7.2": "Ye va dūre vasanti avidūre;",
"kp9:7.3": "Bhūtā va sambhavesī va,",
"kp9:7.4": "Sabbasattā bhavantu sukhitattā.",
"kp9:8.1": "Na paro paraṃ nikubbetha,",
"kp9:8.2": "Nātimaññetha katthaci na kañci;",
"kp9:8.3": "Byārosanā paṭighasañña,",
"kp9:8.4": "Nāññamaññassa dukkhamiccheyya.",
"kp9:9.1": "Mātā yathā niyaṃputta,",
"kp9:9.2": "Māyusā ekaputtamanurakkhe;",
"kp9:9.3": "Evampi sabbabhūtesu,",
"kp9:9.4": "Mānasaṃ bhāvaye aparimāṇaṃ.",
"kp9:10.1": "Mettañca sabbalokasmi,",
"kp9:10.2": "Mānasaṃ bhāvaye aparimāṇaṃ;",
"kp9:10.3": "Uddhaṃ adho ca tiriyañca,",
"kp9:10.4": "Asambādhaṃ averamasapattaṃ.",
"kp9:11.1": "Tiṭṭhaṃ caraṃ nisinno va,",
"kp9:11.2": "Sayāno yāvatāssa vitamiddho;",
"kp9:11.3": "Etaṃ satiṃ adhiṭṭheyya,",
"kp9:11.4": "Brahmametaṃ vihāramidhamāhu.",
"kp9:12.1": "Diṭṭhiñca anupaggamma,",
"kp9:12.2": "Sīlavā dassanena sampanno;",
"kp9:12.3": "Kāmesu vinaya gedhaṃ,",
"kp9:12.4": "Na hi jātuggabbhaseyya punaretīti.",
"kp9:13.1": "Mettasuttaṃ.",
"kp9:14.1": "Khuddakapāṭhapāḷi niṭṭhitā."
}