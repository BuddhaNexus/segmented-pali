{
"kp7:1.1": "Khuddakapāṭha",
"kp7:2.1": "7. Tirokuṭṭasutta",
"kp7:3.1": "Tirokuṭṭesu tiṭṭhanti,",
"kp7:3.2": "sandhisiṅghāṭakesu ca;",
"kp7:3.3": "Dvārabāhāsu tiṭṭhanti,",
"kp7:3.4": "āgantvāna sakaṃ gharaṃ.",
"kp7:4.1": "Pahūte annapānamhi,",
"kp7:4.2": "khajjabhojje upaṭṭhite;",
"kp7:4.3": "Na tesaṃ koci sarati,",
"kp7:4.4": "sattānaṃ kammapaccayā.",
"kp7:5.1": "Evaṃ dadanti ñātīnaṃ,",
"kp7:5.2": "ye honti anukampakā;",
"kp7:5.3": "Suciṃ paṇītaṃ kālena,",
"kp7:5.4": "kappiyaṃ pānabhojanaṃ.",
"kp7:6.1": "Idaṃ vo ñātīnaṃ hotu,",
"kp7:6.2": "sukhitā hontu ñātayo;",
"kp7:6.3": "Te ca tattha samāgantvā,",
"kp7:6.4": "ñātipetā samāgatā.",
"kp7:7.1": "Pahūte annapānamhi,",
"kp7:7.2": "sakkaccaṃ anumodare;",
"kp7:7.3": "Ciraṃ jīvantu no ñātī,",
"kp7:7.4": "yesaṃ hetu labhāmase.",
"kp7:8.1": "Amhākañca katā pūjā,",
"kp7:8.2": "dāyakā ca anipphalā;",
"kp7:8.3": "Na hi tattha kasī atthi,",
"kp7:8.4": "gorakkhettha na vijjati.",
"kp7:9.1": "Vaṇijjā tādisī natthi,",
"kp7:9.2": "hiraññena kayākayaṃ;",
"kp7:9.3": "Ito dinnena yāpenti,",
"kp7:9.4": "petā kālagatā tahiṃ.",
"kp7:10.1": "Unname udakaṃ vuṭṭhaṃ,",
"kp7:10.2": "yathā ninnaṃ pavattati;",
"kp7:10.3": "Evamevaṃ ito dinnaṃ,",
"kp7:10.4": "petānaṃ upakappati.",
"kp7:11.1": "Yathā vārivahā pūrā,",
"kp7:11.2": "paripūrenti sāgaraṃ;",
"kp7:11.3": "Evamevaṃ ito dinnaṃ,",
"kp7:11.4": "petānaṃ upakappati.",
"kp7:12.1": "Adāsi me akāsi me,",
"kp7:12.2": "ñāti mittā sakhā ca me;",
"kp7:12.3": "Petānaṃ dakkhiṇaṃ dajjā,",
"kp7:12.4": "pubbe katamanussaraṃ.",
"kp7:13.1": "Na hi ruṇṇaṃ vā soko vā,",
"kp7:13.2": "yā caññā paridevanā;",
"kp7:13.3": "Na taṃ petānamatthāya,",
"kp7:13.4": "evaṃ tiṭṭhanti ñātayo.",
"kp7:14.1": "Ayañca kho dakkhiṇā dinnā,",
"kp7:14.2": "saṃghamhi suppatiṭṭhitā;",
"kp7:14.3": "Dīgharattaṃ hitāyassa,",
"kp7:14.4": "ṭhānaso upakappati.",
"kp7:15.1": "So ñātidhammo ca ayaṃ nidassito,",
"kp7:15.2": "Petāna pūjā ca katā uḷārā;",
"kp7:15.3": "Balañca bhikkhūnamanuppadinnaṃ,",
"kp7:15.4": "Tumhehi puññaṃ pasutaṃ anappakanti.",
"kp7:16.1": "Tirokuṭṭasuttaṃ."
}