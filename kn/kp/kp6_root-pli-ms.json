{
"kp6:1.1": "Khuddakapāṭha",
"kp6:2.1": "6. Ratanasutta",
"kp6:3.1": "Yānīdha bhūtāni samāgatāni,",
"kp6:3.2": "Bhummāni vā yāni va antalikkhe;",
"kp6:3.3": "Sabbeva bhūtā sumanā bhavantu,",
"kp6:3.4": "Athopi sakkacca suṇantu bhāsitaṃ.",
"kp6:4.1": "Tasmā hi bhūtā nisāmetha sabbe,",
"kp6:4.2": "Mettaṃ karotha mānusiyā pajāya;",
"kp6:4.3": "Divā ca ratto ca haranti ye baliṃ,",
"kp6:4.4": "Tasmā hi ne rakkhatha appamattā.",
"kp6:5.1": "Yaṃ kiñci vittaṃ idha vā huraṃ vā,",
"kp6:5.2": "Saggesu vā yaṃ ratanaṃ paṇītaṃ;",
"kp6:5.3": "Na no samaṃ atthi tathāgatena,",
"kp6:5.4": "Idampi buddhe ratanaṃ paṇītaṃ;",
"kp6:5.5": "Etena saccena suvatthi hotu.",
"kp6:6.1": "Khayaṃ virāgaṃ amataṃ paṇītaṃ,",
"kp6:6.2": "Yadajjhagā sakyamunī samāhito;",
"kp6:6.3": "Na tena dhammena samatthi kiñci,",
"kp6:6.4": "Idampi dhamme ratanaṃ paṇītaṃ;",
"kp6:6.5": "Etena saccena suvatthi hotu.",
"kp6:7.1": "Yaṃ buddhaseṭṭho parivaṇṇayī suciṃ,",
"kp6:7.2": "Samādhimānantarikaññamāhu;",
"kp6:7.3": "Samādhinā tena samo na vijjati,",
"kp6:7.4": "Idampi dhamme ratanaṃ paṇītaṃ;",
"kp6:7.5": "Etena saccena suvatthi hotu.",
"kp6:8.1": "Ye puggalā aṭṭha sataṃ pasatthā,",
"kp6:8.2": "Cattāri etāni yugāni honti;",
"kp6:8.3": "Te dakkhiṇeyyā sugatassa sāvakā,",
"kp6:8.4": "Etesu dinnāni mahapphalāni;",
"kp6:8.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"kp6:8.6": "Etena saccena suvatthi hotu.",
"kp6:9.1": "Ye suppayuttā manasā daḷhena,",
"kp6:9.2": "Nikkāmino gotamasāsanamhi;",
"kp6:9.3": "Te pattipattā amataṃ vigayha,",
"kp6:9.4": "Laddhā mudhā nibbutiṃ bhuñjamānā;",
"kp6:9.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"kp6:9.6": "Etena saccena suvatthi hotu.",
"kp6:10.1": "Yathindakhīlo pathavissito siyā,",
"kp6:10.2": "Catubbhi vātehi asampakampiyo;",
"kp6:10.3": "Tathūpamaṃ sappurisaṃ vadāmi,",
"kp6:10.4": "Yo ariyasaccāni avecca passati;",
"kp6:10.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"kp6:10.6": "Etena saccena suvatthi hotu.",
"kp6:11.1": "Ye ariyasaccāni vibhāvayanti,",
"kp6:11.2": "Gambhīrapaññena sudesitāni;",
"kp6:11.3": "Kiñcāpi te honti bhusaṃ pamattā,",
"kp6:11.4": "Na te bhavaṃ aṭṭhamamādiyanti;",
"kp6:11.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"kp6:11.6": "Etena saccena suvatthi hotu.",
"kp6:12.1": "Sahāvassa dassanasampadāya,",
"kp6:12.2": "Tayassu dhammā jahitā bhavanti;",
"kp6:12.3": "Sakkāyadiṭṭhī vicikicchitañca,",
"kp6:12.4": "Sīlabbataṃ vāpi yadatthi kiñci.",
"kp6:13.1": "Catūhapāyehi ca vippamutto,",
"kp6:13.2": "Chaccābhiṭhānāni abhabba kātuṃ;",
"kp6:13.3": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"kp6:13.4": "Etena saccena suvatthi hotu.",
"kp6:14.1": "Kiñcāpi so kamma karoti pāpakaṃ,",
"kp6:14.2": "Kāyena vācā uda cetasā vā;",
"kp6:14.3": "Abhabba so tassa paṭicchadāya,",
"kp6:14.4": "Abhabbatā diṭṭhapadassa vuttā;",
"kp6:14.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"kp6:14.6": "Etena saccena suvatthi hotu.",
"kp6:15.1": "Vanappagumbe yatha phussitagge,",
"kp6:15.2": "Gimhānamāse paṭhamasmiṃ gimhe;",
"kp6:15.3": "Tathūpamaṃ dhammavaraṃ adesayi,",
"kp6:15.4": "Nibbānagāmiṃ paramaṃ hitāya;",
"kp6:15.5": "Idampi buddhe ratanaṃ paṇītaṃ,",
"kp6:15.6": "Etena saccena suvatthi hotu.",
"kp6:16.1": "Varo varaññū varado varāharo,",
"kp6:16.2": "Anuttaro dhammavaraṃ adesayi;",
"kp6:16.3": "Idampi buddhe ratanaṃ paṇītaṃ,",
"kp6:16.4": "Etena saccena suvatthi hotu.",
"kp6:17.1": "Khīṇaṃ purāṇaṃ nava natthi sambhavaṃ,",
"kp6:17.2": "Virattacittāyatike bhavasmiṃ;",
"kp6:17.3": "Te khīṇabījā avirūḷhichandā,",
"kp6:17.4": "Nibbanti dhīrā yathāyaṃ padīpo;",
"kp6:17.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"kp6:17.6": "Etena saccena suvatthi hotu.",
"kp6:18.1": "Yānīdha bhūtāni samāgatāni,",
"kp6:18.2": "Bhummāni vā yāni va antalikkhe;",
"kp6:18.3": "Tathāgataṃ devamanussapūjitaṃ,",
"kp6:18.4": "Buddhaṃ namassāma suvatthi hotu.",
"kp6:19.1": "Yānīdha bhūtāni samāgatāni,",
"kp6:19.2": "Bhummāni vā yāni va antalikkhe;",
"kp6:19.3": "Tathāgataṃ devamanussapūjitaṃ,",
"kp6:19.4": "Dhammaṃ namassāma suvatthi hotu.",
"kp6:20.1": "Yānīdha bhūtāni samāgatāni,",
"kp6:20.2": "Bhummāni vā yāni va antalikkhe;",
"kp6:20.3": "Tathāgataṃ devamanussapūjitaṃ,",
"kp6:20.4": "Saṃghaṃ namassāma suvatthi hotūti.",
"kp6:21.1": "Ratanasuttaṃ."
}