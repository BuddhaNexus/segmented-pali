{
"kp8:1.1": "Khuddakapāṭha",
"kp8:2.1": "8. Nidhikaṇḍasutta",
"kp8:3.1": "Nidhiṃ nidheti puriso,",
"kp8:3.2": "gambhīre odakantike;",
"kp8:3.3": "Atthe kicce samuppanne,",
"kp8:3.4": "atthāya me bhavissati.",
"kp8:4.1": "Rājato vā duruttassa,",
"kp8:4.2": "corato pīḷitassa vā;",
"kp8:4.3": "Iṇassa vā pamokkhāya,",
"kp8:4.4": "dubbhikkhe āpadāsu vā;",
"kp8:4.5": "Etadatthāya lokasmiṃ,",
"kp8:4.6": "nidhi nāma nidhīyati.",
"kp8:5.1": "Tāvassunihito santo,",
"kp8:5.2": "gambhīre odakantike;",
"kp8:5.3": "Na sabbo sabbadā eva,",
"kp8:5.4": "tassa taṃ upakappati.",
"kp8:6.1": "Nidhi vā ṭhānā cavati,",
"kp8:6.2": "saññā vāssa vimuyhati;",
"kp8:6.3": "Nāgā vā apanāmenti,",
"kp8:6.4": "yakkhā vāpi haranti naṃ.",
"kp8:7.1": "Appiyā vāpi dāyādā,",
"kp8:7.2": "uddharanti apassato;",
"kp8:7.3": "Yadā puññakkhayo hoti,",
"kp8:7.4": "sabbametaṃ vinassati.",
"kp8:8.1": "Yassa dānena sīlena,",
"kp8:8.2": "saṃyamena damena ca;",
"kp8:8.3": "Nidhī sunihito hoti,",
"kp8:8.4": "itthiyā purisassa vā.",
"kp8:9.1": "Cetiyamhi ca saṃghe vā,",
"kp8:9.2": "puggale atithīsu vā;",
"kp8:9.3": "Mātari pitari cāpi,",
"kp8:9.4": "atho jeṭṭhamhi bhātari.",
"kp8:10.1": "Eso nidhi sunihito,",
"kp8:10.2": "ajeyyo anugāmiko;",
"kp8:10.3": "Pahāya gamanīyesu,",
"kp8:10.4": "etaṃ ādāya gacchati.",
"kp8:11.1": "Asādhāraṇamaññesaṃ,",
"kp8:11.2": "acorāharaṇo nidhi;",
"kp8:11.3": "Kayirātha dhīro puññāni,",
"kp8:11.4": "yo nidhi anugāmiko.",
"kp8:12.1": "Esa devamanussānaṃ,",
"kp8:12.2": "sabbakāmadado nidhi;",
"kp8:12.3": "Yaṃ yadevābhipatthenti,",
"kp8:12.4": "sabbametena labbhati.",
"kp8:13.1": "Suvaṇṇatā susaratā,",
"kp8:13.2": "susaṇṭhānā surūpatā;",
"kp8:13.3": "Ādhipaccaparivāro,",
"kp8:13.4": "sabbametena labbhati.",
"kp8:14.1": "Padesarajjaṃ issariyaṃ,",
"kp8:14.2": "cakkavattisukhaṃ piyaṃ;",
"kp8:14.3": "Devarajjampi dibbesu,",
"kp8:14.4": "sabbametena labbhati.",
"kp8:15.1": "Mānussikā ca sampatti,",
"kp8:15.2": "devaloke ca yā rati;",
"kp8:15.3": "Yā ca nibbānasampatti,",
"kp8:15.4": "sabbametena labbhati.",
"kp8:16.1": "Mittasampadamāgamma,",
"kp8:16.2": "yonisova payuñjato;",
"kp8:16.3": "Vijjāvimuttivasībhāvo,",
"kp8:16.4": "sabbametena labbhati.",
"kp8:17.1": "Paṭisambhidā vimokkhā ca,",
"kp8:17.2": "yā ca sāvakapāramī;",
"kp8:17.3": "Paccekabodhi buddhabhūmi,",
"kp8:17.4": "sabbametena labbhati.",
"kp8:18.1": "Evaṃ mahatthikā esā,",
"kp8:18.2": "yadidaṃ puññasampadā;",
"kp8:18.3": "Tasmā dhīrā pasaṃsanti,",
"kp8:18.4": "paṇḍitā katapuññatanti.",
"kp8:19.1": "Nidhikaṇḍasuttaṃ."
}