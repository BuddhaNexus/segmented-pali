{
"bv17:1.1": "Buddhavaṃsa",
"bv17:2.1": "17 Dhammadassībuddhavaṃsa",
"bv17:3.1": "“Tattheva maṇḍakappamhi,",
"bv17:3.2": "dhammadassī mahāyaso;",
"bv17:3.3": "Tamandhakāraṃ vidhamitvā,",
"bv17:3.4": "atirocati sadevake.",
"bv17:4.1": "Tassāpi atulatejassa,",
"bv17:4.2": "dhammacakkappavattane;",
"bv17:4.3": "Koṭisatasahassānaṃ,",
"bv17:4.4": "paṭhamābhisamayo ahu.",
"bv17:5.1": "Yadā buddho dhammadassī,",
"bv17:5.2": "vinesi sañjayaṃ isiṃ;",
"bv17:5.3": "Tadā navutikoṭīnaṃ,",
"bv17:5.4": "dutiyābhisamayo ahu.",
"bv17:6.1": "Yadā sakko upāgañchi,",
"bv17:6.2": "sapariso vināyakaṃ;",
"bv17:6.3": "Tadā asītikoṭīnaṃ,",
"bv17:6.4": "tatiyābhisamayo ahu.",
"bv17:7.1": "Tassāpi devadevassa,",
"bv17:7.2": "sannipātā tayo ahuṃ;",
"bv17:7.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv17:7.4": "santacittāna tādinaṃ.",
"bv17:8.1": "Yadā buddho dhammadassī,",
"bv17:8.2": "Saraṇe vassaṃ upāgami;",
"bv17:8.3": "Tadā koṭisatasahassānaṃ,",
"bv17:8.4": "Paṭhamo āsi samāgamo.",
"bv17:9.1": "Punāparaṃ yadā buddho,",
"bv17:9.2": "devato eti mānusaṃ;",
"bv17:9.3": "Tadāpi satakoṭīnaṃ,",
"bv17:9.4": "dutiyo āsi samāgamo.",
"bv17:10.1": "Punāparaṃ yadā buddho,",
"bv17:10.2": "pakāsesi dhute guṇe;",
"bv17:10.3": "Tadā asītikoṭīnaṃ,",
"bv17:10.4": "tatiyo āsi samāgamo.",
"bv17:11.1": "Ahaṃ tena samayena,",
"bv17:11.2": "sakko āsiṃ purindado;",
"bv17:11.3": "Dibbena gandhamālena,",
"bv17:11.4": "tūriyenābhipūjayiṃ.",
"bv17:12.1": "Sopi maṃ buddho byākāsi,",
"bv17:12.2": "devamajjhe nisīdiya;",
"bv17:12.3": "‘Aṭṭhārase kappasate,",
"bv17:12.4": "ayaṃ buddho bhavissati.",
"bv17:13.1": "Padhānaṃ padahitvāna, … pe …",
"bv17:13.4": "hessāma sammukhā imaṃ’.",
"bv17:14.1": "Tassāpi vacanaṃ sutvā,",
"bv17:14.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv17:14.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv17:14.4": "dasapāramipūriyā.",
"bv17:15.1": "Saraṇaṃ nāma nagaraṃ,",
"bv17:15.2": "saraṇo nāma khattiyo;",
"bv17:15.3": "Sunandā nāma janikā,",
"bv17:15.4": "dhammadassissa satthuno.",
"bv17:16.1": "Aṭṭhavassasahassāni,",
"bv17:16.2": "Agāraṃ ajjha so vasi;",
"bv17:16.3": "Arajo virajo sudassano,",
"bv17:16.4": "Tayo pāsādamuttamā.",
"bv17:17.1": "Ticattārīsasahassāni,",
"bv17:17.2": "nāriyo samalaṅkatā;",
"bv17:17.3": "Vicikoḷi nāma nārī,",
"bv17:17.4": "atrajo puññavaḍḍhano.",
"bv17:18.1": "Nimitte caturo disvā,",
"bv17:18.2": "pāsādenābhinikkhami;",
"bv17:18.3": "Sattāhaṃ padhānacāraṃ,",
"bv17:18.4": "acarī purisuttamo.",
"bv17:19.1": "Brahmunā yācito santo,",
"bv17:19.2": "dhammadassī narāsabho;",
"bv17:19.3": "Vatti cakkaṃ mahāvīro,",
"bv17:19.4": "migadāye naruttamo.",
"bv17:20.1": "Padumo phussadevo ca,",
"bv17:20.2": "ahesuṃ aggasāvakā;",
"bv17:20.3": "Sunetto nāmupaṭṭhāko,",
"bv17:20.4": "dhammadassissa satthuno.",
"bv17:21.1": "Khemā ca saccanāmā ca,",
"bv17:21.2": "ahesuṃ aggasāvikā;",
"bv17:21.3": "Bodhi tassa bhagavato,",
"bv17:21.4": "bimbijāloti vuccati.",
"bv17:22.1": "Subhaddo kaṭissaho ceva,",
"bv17:22.2": "ahesuṃ aggupaṭṭhakā;",
"bv17:22.3": "Sāḷiyā ca kaḷiyā ca,",
"bv17:22.4": "ahesuṃ aggupaṭṭhikā.",
"bv17:23.1": "Sopi buddho asamasamo,",
"bv17:23.2": "asītihatthamuggato;",
"bv17:23.3": "Atirocati tejena,",
"bv17:23.4": "dasasahassimhi dhātuyā.",
"bv17:24.1": "Suphullo sālarājāva,",
"bv17:24.2": "vijjūva gagane yathā;",
"bv17:24.3": "Majjhanhikeva sūriyo,",
"bv17:24.4": "evaṃ so upasobhatha.",
"bv17:25.1": "Tassāpi atulatejassa,",
"bv17:25.2": "samakaṃ āsi jīvitaṃ;",
"bv17:25.3": "Vassasatasahassāni,",
"bv17:25.4": "loke aṭṭhāsi cakkhumā.",
"bv17:26.1": "Obhāsaṃ dassayitvāna,",
"bv17:26.2": "vimalaṃ katvāna sāsanaṃ;",
"bv17:26.3": "Cavi candova gagane,",
"bv17:26.4": "nibbuto so sasāvako.",
"bv17:27.1": "Dhammadassī mahāvīro,",
"bv17:27.2": "Sālārāmamhi nibbuto;",
"bv17:27.3": "Tatthevassa thūpavaro,",
"bv17:27.4": "Tīṇiyojanamuggato”ti. #729",
"bv17:28.1": "Dhammadassissa bhagavato vaṃso pannarasamo."
}