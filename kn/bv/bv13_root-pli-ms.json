{
"bv13:1.1": "Buddhavaṃsa",
"bv13:2.1": "13. Sumedhabuddhavaṃsa",
"bv13:3.1": "“Padumuttarassa aparena,",
"bv13:3.2": "Sumedho nāma nāyako;",
"bv13:3.3": "Durāsado uggatejo,",
"bv13:3.4": "Sabbalokuttamo muni.",
"bv13:4.1": "Pasannanetto sumukho,",
"bv13:4.2": "brahā uju patāpavā;",
"bv13:4.3": "Hitesī sabbasattānaṃ,",
"bv13:4.4": "bahū mocesi bandhanā.",
"bv13:5.1": "Yadā buddho pāpuṇitvā,",
"bv13:5.2": "kevalaṃ bodhimuttamaṃ;",
"bv13:5.3": "Sudassanamhi nagare,",
"bv13:5.4": "dhammacakkaṃ pavattayi.",
"bv13:6.1": "Tassāpi abhisamayā tīṇi,",
"bv13:6.2": "Ahesuṃ dhammadesane;",
"bv13:6.3": "Koṭisatasahassānaṃ,",
"bv13:6.4": "Paṭhamābhisamayo ahu.",
"bv13:7.1": "Punāparaṃ kumbhakaṇṇaṃ,",
"bv13:7.2": "yakkhaṃ so damayī jino;",
"bv13:7.3": "Navutikoṭisahassānaṃ,",
"bv13:7.4": "dutiyābhisamayo ahu.",
"bv13:8.1": "Punāparaṃ amitayaso,",
"bv13:8.2": "catusaccaṃ pakāsayi;",
"bv13:8.3": "Asītikoṭisahassānaṃ,",
"bv13:8.4": "tatiyābhisamayo ahu.",
"bv13:9.1": "Sannipātā tayo āsuṃ,",
"bv13:9.2": "sumedhassa mahesino;",
"bv13:9.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv13:9.4": "santacittāna tādinaṃ.",
"bv13:10.1": "Sudassanaṃ nāma nagaraṃ,",
"bv13:10.2": "upagañchi jino yadā;",
"bv13:10.3": "Tadā khīṇāsavā bhikkhū,",
"bv13:10.4": "samiṃsu satakoṭiyo.",
"bv13:11.1": "Punāparaṃ devakūṭe,",
"bv13:11.2": "bhikkhūnaṃ kathinatthate;",
"bv13:11.3": "Tadā navutikoṭīnaṃ,",
"bv13:11.4": "dutiyo āsi samāgamo.",
"bv13:12.1": "Punāparaṃ dasabalo,",
"bv13:12.2": "yadā carati cārikaṃ;",
"bv13:12.3": "Tadā asītikoṭīnaṃ,",
"bv13:12.4": "tatiyo āsi samāgamo.",
"bv13:13.1": "Ahaṃ tena samayena,",
"bv13:13.2": "uttaro nāma māṇavo;",
"bv13:13.3": "Asītikoṭiyo mayhaṃ,",
"bv13:13.4": "ghare sannicitaṃ dhanaṃ.",
"bv13:14.1": "Kevalaṃ sabbaṃ datvāna,",
"bv13:14.2": "sasaṃghe lokanāyake;",
"bv13:14.3": "Saraṇaṃ tassupagañchiṃ,",
"bv13:14.4": "pabbajjañcābhirocayiṃ.",
"bv13:15.1": "Sopi maṃ buddho byākāsi,",
"bv13:15.2": "karonto anumodanaṃ;",
"bv13:15.3": "‘Tiṃsakappasahassamhi,",
"bv13:15.4": "ayaṃ buddho bhavissati.",
"bv13:16.1": "Padhānaṃ padahitvāna, … pe …",
"bv13:16.4": "hessāma sammukhā imaṃ’.",
"bv13:17.1": "Tassāpi vacanaṃ sutvā,",
"bv13:17.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv13:17.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv13:17.4": "dasapāramipūriyā.",
"bv13:18.1": "Suttantaṃ vinayañcāpi,",
"bv13:18.2": "navaṅgaṃ satthusāsanaṃ;",
"bv13:18.3": "Sabbaṃ pariyāpuṇitvāna,",
"bv13:18.4": "sobhayiṃ jinasāsanaṃ.",
"bv13:19.1": "Tatthappamatto viharanto,",
"bv13:19.2": "Nisajjaṭṭhānacaṅkame;",
"bv13:19.3": "Abhiññāsu pāramiṃ gantvā,",
"bv13:19.4": "Brahmalokamagañchahaṃ.",
"bv13:20.1": "Sudassanaṃ nāma nagaraṃ,",
"bv13:20.2": "sudatto nāma khattiyo;",
"bv13:20.3": "Sudattā nāma janikā,",
"bv13:20.4": "sumedhassa mahesino.",
"bv13:21.1": "Navavassasahassāni,",
"bv13:21.2": "Agāraṃ ajjha so vasi;",
"bv13:21.3": "Sucandakañcanasirivaḍḍhā,",
"bv13:21.4": "Tayo pāsādamuttamā.",
"bv13:22.1": "Tisoḷasasahassāni,",
"bv13:22.2": "nāriyo samalaṅkatā;",
"bv13:22.3": "Sumanā nāma sā nārī,",
"bv13:22.4": "punabbasu nāma atrajo.",
"bv13:23.1": "Nimitte caturo disvā,",
"bv13:23.2": "hatthiyānena nikkhami;",
"bv13:23.3": "Anūnakaṃ aḍḍhamāsaṃ,",
"bv13:23.4": "padhānaṃ padahī jino.",
"bv13:24.1": "Brahmunā yācito santo,",
"bv13:24.2": "sumedho lokanāyako;",
"bv13:24.3": "Vatti cakkaṃ mahāvīro,",
"bv13:24.4": "sudassanuyyānamuttame.",
"bv13:25.1": "Saraṇo sabbakāmo ca,",
"bv13:25.2": "ahesuṃ aggasāvakā;",
"bv13:25.3": "Sāgaro nāmupaṭṭhāko,",
"bv13:25.4": "sumedhassa mahesino.",
"bv13:26.1": "Rāmā ceva surāmā ca,",
"bv13:26.2": "ahesuṃ aggasāvikā;",
"bv13:26.3": "Bodhi tassa bhagavato,",
"bv13:26.4": "mahānīpoti vuccati.",
"bv13:27.1": "Uruvelā yasavā ca,",
"bv13:27.2": "ahesuṃ aggupaṭṭhakā;",
"bv13:27.3": "Yasodharā sirimā ca,",
"bv13:27.4": "ahesuṃ aggupaṭṭhikā.",
"bv13:28.1": "Aṭṭhāsītiratanāni,",
"bv13:28.2": "accuggato mahāmuni;",
"bv13:28.3": "Obhāseti disā sabbā,",
"bv13:28.4": "cando tāragaṇe yathā.",
"bv13:29.1": "Cakkavattimaṇī nāma,",
"bv13:29.2": "yathā tapati yojanaṃ;",
"bv13:29.3": "Tatheva tassa ratanaṃ,",
"bv13:29.4": "samantā pharati yojanaṃ.",
"bv13:30.1": "Navutivassasahassāni,",
"bv13:30.2": "āyu vijjati tāvade;",
"bv13:30.3": "Tāvatā tiṭṭhamāno so,",
"bv13:30.4": "tāresi janataṃ bahuṃ.",
"bv13:31.1": "Tevijjachaḷabhiññehi,",
"bv13:31.2": "balappattehi tādihi;",
"bv13:31.3": "Samākulamidaṃ āsi,",
"bv13:31.4": "arahantehi sādhuhi.",
"bv13:32.1": "Tepi sabbe amitayasā,",
"bv13:32.2": "vippamuttā nirūpadhī;",
"bv13:32.3": "Ñāṇālokaṃ dassayitvā,",
"bv13:32.4": "nibbutā te mahāyasā.",
"bv13:33.1": "Sumedho jinavaro buddho,",
"bv13:33.2": "Medhārāmamhi nibbuto;",
"bv13:33.3": "Dhātuvitthārikaṃ āsi,",
"bv13:33.4": "Tesu tesu padesato”ti. #615",
"bv13:34.1": "Sumedhassa bhagavato vaṃso ekādasamo."
}