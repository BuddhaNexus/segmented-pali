{
"bv24:1.1": "Buddhavaṃsa",
"bv24:2.1": "24. Kakusandhabuddhavaṃsa",
"bv24:3.1": "“Vessabhussa aparena,",
"bv24:3.2": "sambuddho dvipaduttamo;",
"bv24:3.3": "Kakusandho nāma nāmena,",
"bv24:3.4": "appameyyo durāsado.",
"bv24:4.1": "Ugghāṭetvā sabbabhavaṃ,",
"bv24:4.2": "cariyāya pāramiṃ gato;",
"bv24:4.3": "Sīhova pañjaraṃ bhetvā,",
"bv24:4.4": "patto sambodhimuttamaṃ.",
"bv24:5.1": "Dhammacakkaṃ pavattente,",
"bv24:5.2": "Kakusandhe lokanāyake;",
"bv24:5.3": "Cattārīsakoṭisahassānaṃ,",
"bv24:5.4": "Dhammābhisamayo ahu.",
"bv24:6.1": "Antalikkhamhi ākāse,",
"bv24:6.2": "yamakaṃ katvā vikubbanaṃ;",
"bv24:6.3": "Tiṃsakoṭisahassānaṃ,",
"bv24:6.4": "bodhesi devamānuse.",
"bv24:7.1": "Naradevassa yakkhassa,",
"bv24:7.2": "catusaccappakāsane;",
"bv24:7.3": "Dhammābhisamayo tassa,",
"bv24:7.4": "gaṇanāto asaṅkhiyo.",
"bv24:8.1": "Kakusandhassa bhagavato,",
"bv24:8.2": "eko āsi samāgamo;",
"bv24:8.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv24:8.4": "santacittāna tādinaṃ.",
"bv24:9.1": "Cattālīsasahassānaṃ,",
"bv24:9.2": "tadā āsi samāgamo;",
"bv24:9.3": "Dantabhūmimanuppattānaṃ,",
"bv24:9.4": "āsavārigaṇakkhayā.",
"bv24:10.1": "Ahaṃ tena samayena,",
"bv24:10.2": "khemo nāmāsi khattiyo;",
"bv24:10.3": "Tathāgate jinaputte,",
"bv24:10.4": "dānaṃ datvā anappakaṃ.",
"bv24:11.1": "Pattañca cīvaraṃ datvā,",
"bv24:11.2": "añjanaṃ madhulaṭṭhikaṃ;",
"bv24:11.3": "Imetaṃ patthitaṃ sabbaṃ,",
"bv24:11.4": "paṭiyādemi varaṃ varaṃ.",
"bv24:12.1": "Sopi maṃ buddho byākāsi,",
"bv24:12.2": "kakusandho vināyako;",
"bv24:12.3": "‘Imamhi bhaddake kappe,",
"bv24:12.4": "ayaṃ buddho bhavissati.",
"bv24:13.1": "Ahu kapilavhayā rammā, … pe …",
"bv24:13.4": "hessāma sammukhā imaṃ’.",
"bv24:14.1": "Tassāpi vacanaṃ sutvā,",
"bv24:14.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv24:14.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv24:14.4": "dasapāramipūriyā.",
"bv24:15.1": "Nagaraṃ khemāvatī nāma,",
"bv24:15.2": "khemo nāmāsahaṃ tadā;",
"bv24:15.3": "Sabbaññutaṃ gavesanto,",
"bv24:15.4": "pabbajiṃ tassa santike.",
"bv24:16.1": "Brāhmaṇo aggidatto ca,",
"bv24:16.2": "āsi buddhassa so pitā;",
"bv24:16.3": "Visākhā nāma janikā,",
"bv24:16.4": "kakusandhassa satthuno.",
"bv24:17.1": "Vasate tattha kheme pure,",
"bv24:17.2": "sambuddhassa mahākulaṃ;",
"bv24:17.3": "Narānaṃ pavaraṃ seṭṭhaṃ,",
"bv24:17.4": "jātimantaṃ mahāyasaṃ.",
"bv24:18.1": "Catuvassasahassāni,",
"bv24:18.2": "Agāraṃ ajjha so vasi;",
"bv24:18.3": "Kāmakāmavaṇṇakāmasuddhināmā,",
"bv24:18.4": "Tayo pāsādamuttamā.",
"bv24:19.1": "Samattiṃsasahassāni,",
"bv24:19.2": "nāriyo samalaṅkatā;",
"bv24:19.3": "Rocinī nāma sā nārī,",
"bv24:19.4": "uttaro nāma atrajo.",
"bv24:20.1": "Nimitte caturo disvā,",
"bv24:20.2": "rathayānena nikkhami;",
"bv24:20.3": "Anūnaaṭṭhamāsāni,",
"bv24:20.4": "padhānaṃ padahī jino.",
"bv24:21.1": "Brahmunā yācito santo,",
"bv24:21.2": "kakusandho vināyako;",
"bv24:21.3": "Vatti cakkaṃ mahāvīro,",
"bv24:21.4": "migadāye naruttamo.",
"bv24:22.1": "Vidhuro ca sañjīvo ca,",
"bv24:22.2": "ahesuṃ aggasāvakā;",
"bv24:22.3": "Buddhijo nāmupaṭṭhāko,",
"bv24:22.4": "kakusandhassa satthuno.",
"bv24:23.1": "Sāmā ca campānāmā ca,",
"bv24:23.2": "ahesuṃ aggasāvikā;",
"bv24:23.3": "Bodhi tassa bhagavato,",
"bv24:23.4": "sirīsoti pavuccati.",
"bv24:24.1": "Accuto ca sumano ca,",
"bv24:24.2": "ahesuṃ aggupaṭṭhakā;",
"bv24:24.3": "Nandā ceva sunandā ca,",
"bv24:24.4": "ahesuṃ aggupaṭṭhikā.",
"bv24:25.1": "Cattālīsaratanāni,",
"bv24:25.2": "accuggato mahāmuni;",
"bv24:25.3": "Kanakappabhā niccharati,",
"bv24:25.4": "samantā dasayojanaṃ.",
"bv24:26.1": "Cattālīsavassasahassāni,",
"bv24:26.2": "Āyu tassa mahesino;",
"bv24:26.3": "Tāvatā tiṭṭhamāno so,",
"bv24:26.4": "Tāresi janataṃ bahuṃ.",
"bv24:27.1": "Dhammāpaṇaṃ pasāretvā,",
"bv24:27.2": "naranārīnaṃ sadevake;",
"bv24:27.3": "Naditvā sīhanādaṃva,",
"bv24:27.4": "nibbuto so sasāvako.",
"bv24:28.1": "Aṭṭhaṅgavacanasampanno,",
"bv24:28.2": "acchiddāni nirantaraṃ;",
"bv24:28.3": "Sabbaṃ tamantarahitaṃ,",
"bv24:28.4": "nanu rittā sabbasaṅkhārā.",
"bv24:29.1": "Kakusandho jinavaro,",
"bv24:29.2": "Khemārāmamhi nibbuto;",
"bv24:29.3": "Tatthevassa thūpavaro,",
"bv24:29.4": "Gāvutaṃ nabhamuggato”ti. #928",
"bv24:30.1": "Kakusandhassa bhagavato vaṃso dvāvīsatimo."
}