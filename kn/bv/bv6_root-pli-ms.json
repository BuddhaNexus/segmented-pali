{
"bv6:1.1": "Buddhavaṃsa",
"bv6:2.1": "6. Sumanabuddhavaṃsa",
"bv6:3.1": "“Maṅgalassa aparena,",
"bv6:3.2": "sumano nāma nāyako;",
"bv6:3.3": "Sabbadhammehi asamo,",
"bv6:3.4": "sabbasattānamuttamo.",
"bv6:4.1": "Tadā amatabheriṃ so,",
"bv6:4.2": "āhanī mekhale pure;",
"bv6:4.3": "Dhammasaṅkhasamāyuttaṃ,",
"bv6:4.4": "navaṅgaṃ jinasāsanaṃ.",
"bv6:5.1": "Nijjinitvā kilese so,",
"bv6:5.2": "patvā sambodhimuttamaṃ;",
"bv6:5.3": "Māpesi nagaraṃ satthā,",
"bv6:5.4": "saddhammapuravaruttamaṃ.",
"bv6:6.1": "Nirantaraṃ akuṭilaṃ,",
"bv6:6.2": "ujuṃ vipulavitthataṃ;",
"bv6:6.3": "Māpesi so mahāvīthiṃ,",
"bv6:6.4": "satipaṭṭhānavaruttamaṃ.",
"bv6:7.1": "Phale cattāri sāmaññe,",
"bv6:7.2": "catasso paṭisambhidā;",
"bv6:7.3": "Chaḷabhiññāṭṭhasamāpattī,",
"bv6:7.4": "pasāresi tattha vīthiyaṃ.",
"bv6:8.1": "Ye appamattā akhilā,",
"bv6:8.2": "hirivīriyehupāgatā;",
"bv6:8.3": "Te te ime guṇavare,",
"bv6:8.4": "ādiyanti yathā sukhaṃ.",
"bv6:9.1": "Evametena yogena,",
"bv6:9.2": "uddharanto mahājanaṃ;",
"bv6:9.3": "Bodhesi paṭhamaṃ satthā,",
"bv6:9.4": "koṭisatasahassiyo.",
"bv6:10.1": "Yamhi kāle mahāvīro,",
"bv6:10.2": "ovadī titthiye gaṇe;",
"bv6:10.3": "Koṭisahassābhisamiṃsu,",
"bv6:10.4": "dutiye dhammadesane.",
"bv6:11.1": "Yadā devā manussā ca,",
"bv6:11.2": "samaggā ekamānasā;",
"bv6:11.3": "Nirodhapañhaṃ pucchiṃsu,",
"bv6:11.4": "saṃsayañcāpi mānasaṃ.",
"bv6:12.1": "Tadāpi dhammadesane,",
"bv6:12.2": "nirodhaparidīpane;",
"bv6:12.3": "Navutikoṭisahassānaṃ,",
"bv6:12.4": "tatiyābhisamayo ahu.",
"bv6:13.1": "Sannipātā tayo āsuṃ,",
"bv6:13.2": "sumanassa mahesino;",
"bv6:13.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv6:13.4": "santacittāna tādinaṃ.",
"bv6:14.1": "Vassaṃvutthassa bhagavato,",
"bv6:14.2": "abhighuṭṭhe pavāraṇe;",
"bv6:14.3": "Koṭisatasahassehi,",
"bv6:14.4": "pavāresi tathāgato.",
"bv6:15.1": "Tatoparaṃ sannipāte,",
"bv6:15.2": "vimale kañcanapabbate;",
"bv6:15.3": "Navutikoṭisahassānaṃ,",
"bv6:15.4": "dutiyo āsi samāgamo.",
"bv6:16.1": "Yadā sakko devarājā,",
"bv6:16.2": "buddhadassanupāgami;",
"bv6:16.3": "Asītikoṭisahassānaṃ,",
"bv6:16.4": "tatiyo āsi samāgamo.",
"bv6:17.1": "Ahaṃ tena samayena,",
"bv6:17.2": "nāgarājā mahiddhiko;",
"bv6:17.3": "Atulo nāma nāmena,",
"bv6:17.4": "ussannakusalasañcayo.",
"bv6:18.1": "Tadāhaṃ nāgabhavanā,",
"bv6:18.2": "nikkhamitvā sañātibhi;",
"bv6:18.3": "Nāgānaṃ dibbaturiyehi,",
"bv6:18.4": "sasaṃghaṃ jinamupaṭṭhahiṃ.",
"bv6:19.1": "Koṭisatasahassānaṃ,",
"bv6:19.2": "annapānena tappayiṃ;",
"bv6:19.3": "Paccekadussayugaṃ datvā,",
"bv6:19.4": "saraṇaṃ tamupāgamiṃ.",
"bv6:20.1": "Sopi maṃ buddho byākāsi,",
"bv6:20.2": "sumano lokanāyako;",
"bv6:20.3": "‘Aparimeyyito kappe,",
"bv6:20.4": "ayaṃ buddho bhavissati.",
"bv6:21.1": "Padhānaṃ padahitvāna, … pe …",
"bv6:21.4": "hessāma sammukhā imaṃ’.",
"bv6:22.1": "Tassāpi vacanaṃ sutvā,",
"bv6:22.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv6:22.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv6:22.4": "dasapāramipūriyā.",
"bv6:23.1": "Nagaraṃ mekhalaṃ nāma,",
"bv6:23.2": "sudatto nāma khattiyo;",
"bv6:23.3": "Sirimā nāma janikā,",
"bv6:23.4": "sumanassa mahesino.",
"bv6:24.1": "Navavassasahassāni,",
"bv6:24.2": "agāraṃ ajjha so vasi;",
"bv6:24.3": "Cando sucando vaṭaṃso ca,",
"bv6:24.4": "tayo pāsādamuttamā.",
"bv6:25.1": "Tesaṭṭhisatasahassāni,",
"bv6:25.2": "nāriyo samalaṅkatā;",
"bv6:25.3": "Vaṭaṃsikā nāma nārī,",
"bv6:25.4": "anūpamo nāma atrajo.",
"bv6:26.1": "Nimitte caturo disvā,",
"bv6:26.2": "hatthiyānena nikkhami;",
"bv6:26.3": "Anūnadasamāsāni,",
"bv6:26.4": "padhānaṃ padahī jino.",
"bv6:27.1": "Brahmunā yācito santo,",
"bv6:27.2": "sumano lokanāyako;",
"bv6:27.3": "Vatti cakkaṃ mahāvīro,",
"bv6:27.4": "mekhale puramuttame.",
"bv6:28.1": "Saraṇo bhāvitatto ca,",
"bv6:28.2": "ahesuṃ aggasāvakā;",
"bv6:28.3": "Udeno nāmupaṭṭhāko,",
"bv6:28.4": "sumanassa mahesino.",
"bv6:29.1": "Soṇā ca upasoṇā ca,",
"bv6:29.2": "ahesuṃ aggasāvikā;",
"bv6:29.3": "Sopi buddho amitayaso,",
"bv6:29.4": "nāgamūle abujjhatha.",
"bv6:30.1": "Varuṇo ceva saraṇo ca,",
"bv6:30.2": "ahesuṃ aggupaṭṭhakā;",
"bv6:30.3": "Cālā ca upacālā ca,",
"bv6:30.4": "ahesuṃ aggupaṭṭhikā.",
"bv6:31.1": "Uccattanena so buddho,",
"bv6:31.2": "navutihatthamuggato;",
"bv6:31.3": "Kañcanagghiyasaṅkāso,",
"bv6:31.4": "dasasahassī virocati.",
"bv6:32.1": "Navutivassasahassāni,",
"bv6:32.2": "āyu vijjati tāvade;",
"bv6:32.3": "Tāvatā tiṭṭhamāno so,",
"bv6:32.4": "tāresi janataṃ bahuṃ.",
"bv6:33.1": "Tāraṇīye tārayitvā,",
"bv6:33.2": "bodhanīye ca bodhayi;",
"bv6:33.3": "Parinibbāyi sambuddho,",
"bv6:33.4": "uḷurājāva atthami.",
"bv6:34.1": "Te ca khīṇāsavā bhikkhū,",
"bv6:34.2": "so ca buddho asādiso;",
"bv6:34.3": "Atulappabhaṃ dassayitvā,",
"bv6:34.4": "nibbutā ye mahāyasā.",
"bv6:35.1": "Tañca ñāṇaṃ atuliyaṃ,",
"bv6:35.2": "Tāni ca atulāni ratanāni;",
"bv6:35.3": "Sabbaṃ tamantarahitaṃ,",
"bv6:35.4": "Nanu rittā sabbasaṅkhārā.",
"bv6:36.1": "Sumano yasadharo buddho,",
"bv6:36.2": "Aṅgārāmamhi nibbuto;",
"bv6:36.3": "Tattheva tassa jinathūpo,",
"bv6:36.4": "Catuyojanamuggato”ti. #403",
"bv6:37.1": "Sumanassa bhagavato vaṃso catuttho."
}