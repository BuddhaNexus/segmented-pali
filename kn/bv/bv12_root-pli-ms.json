{
"bv12:1.1": "Buddhavaṃsa",
"bv12:2.1": "12. Padumuttarabuddhavaṃsa",
"bv12:3.1": "“Nāradassa aparena,",
"bv12:3.2": "sambuddho dvipaduttamo;",
"bv12:3.3": "Padumuttaro nāma jino,",
"bv12:3.4": "akkhobbho sāgarūpamo.",
"bv12:4.1": "Maṇḍakappova so āsi,",
"bv12:4.2": "yamhi buddho ajāyatha;",
"bv12:4.3": "Ussannakusalā janatā,",
"bv12:4.4": "tamhi kappe ajāyatha.",
"bv12:5.1": "Padumuttarassa bhagavato,",
"bv12:5.2": "Paṭhame dhammadesane;",
"bv12:5.3": "Koṭisatasahassānaṃ,",
"bv12:5.4": "Dhammābhisamayo ahu.",
"bv12:6.1": "Tato parampi vassante,",
"bv12:6.2": "Tappayante ca pāṇine;",
"bv12:6.3": "Sattatiṃsasatasahassānaṃ,",
"bv12:6.4": "Dutiyābhisamayo ahu.",
"bv12:7.1": "Yamhi kāle mahāvīro,",
"bv12:7.2": "ānandaṃ upasaṅkami;",
"bv12:7.3": "Pitusantikaṃ upagantvā,",
"bv12:7.4": "āhanī amatadundubhiṃ.",
"bv12:8.1": "Āhate amatabherimhi,",
"bv12:8.2": "vassante dhammavuṭṭhiyā;",
"bv12:8.3": "Paññāsasatasahassānaṃ,",
"bv12:8.4": "tatiyābhisamayo ahu.",
"bv12:9.1": "Ovādako viññāpako,",
"bv12:9.2": "tārako sabbapāṇinaṃ;",
"bv12:9.3": "Desanākusalo buddho,",
"bv12:9.4": "tāresi janataṃ bahuṃ.",
"bv12:10.1": "Sannipātā tayo āsuṃ,",
"bv12:10.2": "padumuttarassa satthuno;",
"bv12:10.3": "Koṭisatasahassānaṃ,",
"bv12:10.4": "paṭhamo āsi samāgamo.",
"bv12:11.1": "Yadā buddho asamasamo,",
"bv12:11.2": "vasi vebhārapabbate;",
"bv12:11.3": "Navutikoṭisahassānaṃ,",
"bv12:11.4": "dutiyo āsi samāgamo.",
"bv12:12.1": "Puna cārikaṃ pakkante,",
"bv12:12.2": "gāmanigamaraṭṭhato;",
"bv12:12.3": "Asītikoṭisahassānaṃ,",
"bv12:12.4": "tatiyo āsi samāgamo.",
"bv12:13.1": "Ahaṃ tena samayena,",
"bv12:13.2": "Jaṭilo nāma raṭṭhiko;",
"bv12:13.3": "Sambuddhappamukhaṃ saṃghaṃ,",
"bv12:13.4": "Sabhattaṃ dussamadāsahaṃ.",
"bv12:14.1": "Sopi maṃ buddho byākāsi,",
"bv12:14.2": "saṃghamajjhe nisīdiya;",
"bv12:14.3": "‘Satasahassito kappe,",
"bv12:14.4": "ayaṃ buddho bhavissati.",
"bv12:15.1": "Padhānaṃ padahitvāna, … pe …",
"bv12:15.4": "hessāma sammukhā imaṃ’.",
"bv12:16.1": "Tassāpi vacanaṃ sutvā,",
"bv12:16.2": "uttariṃ vatamadhiṭṭhahiṃ;",
"bv12:16.3": "Akāsiṃ uggadaḷhaṃ dhitiṃ,",
"bv12:16.4": "dasapāramipūriyā.",
"bv12:17.1": "Byāhatā titthiyā sabbe,",
"bv12:17.2": "Vimanā dummanā tadā;",
"bv12:17.3": "Na tesaṃ keci paricaranti,",
"bv12:17.4": "Raṭṭhato nicchubhanti te.",
"bv12:18.1": "Sabbe tattha samāgantvā,",
"bv12:18.2": "upagacchuṃ buddhasantike;",
"bv12:18.3": "Tuvaṃ nātho mahāvīra,",
"bv12:18.4": "saraṇaṃ hohi cakkhuma.",
"bv12:19.1": "Anukampako kāruṇiko,",
"bv12:19.2": "hitesī sabbapāṇinaṃ;",
"bv12:19.3": "Sampatte titthiye sabbe,",
"bv12:19.4": "pañcasīle patiṭṭhapi.",
"bv12:20.1": "Evaṃ nirākulaṃ āsi,",
"bv12:20.2": "suññataṃ titthiyehi taṃ;",
"bv12:20.3": "Vicittaṃ arahantehi,",
"bv12:20.4": "vasībhūtehi tādihi.",
"bv12:21.1": "Nagaraṃ haṃsavatī nāma,",
"bv12:21.2": "ānando nāma khattiyo;",
"bv12:21.3": "Sujātā nāma janikā,",
"bv12:21.4": "padumuttarassa satthuno.",
"bv12:22.1": "Dasavassasahassāni,",
"bv12:22.2": "Agāraṃ ajjha so vasi;",
"bv12:22.3": "Naravāhano yaso vasavattī,",
"bv12:22.4": "Tayo pāsādamuttamā.",
"bv12:23.1": "Ticattārīsasahassāni,",
"bv12:23.2": "nāriyo samalaṅkatā;",
"bv12:23.3": "Vasudattā nāma nārī,",
"bv12:23.4": "uttamo nāma atrajo.",
"bv12:24.1": "Nimitte caturo disvā,",
"bv12:24.2": "pāsādenābhinikkhami;",
"bv12:24.3": "Sattāhaṃ padhānacāraṃ,",
"bv12:24.4": "acarī purisuttamo.",
"bv12:25.1": "Brahmunā yācito santo,",
"bv12:25.2": "padumuttaro vināyako;",
"bv12:25.3": "Vatti cakkaṃ mahāvīro,",
"bv12:25.4": "mithiluyyānamuttame.",
"bv12:26.1": "Devalo ca sujāto ca,",
"bv12:26.2": "Ahesuṃ aggasāvakā;",
"bv12:26.3": "Sumano nāmupaṭṭhāko,",
"bv12:26.4": "Padumuttarassa mahesino.",
"bv12:27.1": "Amitā ca asamā ca,",
"bv12:27.2": "ahesuṃ aggasāvikā;",
"bv12:27.3": "Bodhi tassa bhagavato,",
"bv12:27.4": "salaloti pavuccati.",
"bv12:28.1": "Vitiṇṇo ceva tisso ca,",
"bv12:28.2": "ahesuṃ aggupaṭṭhakā;",
"bv12:28.3": "Haṭṭhā ceva vicittā ca,",
"bv12:28.4": "ahesuṃ aggupaṭṭhikā.",
"bv12:29.1": "Aṭṭhapaṇṇāsaratanaṃ,",
"bv12:29.2": "accuggato mahāmuni;",
"bv12:29.3": "Kañcanagghiyasaṅkāso,",
"bv12:29.4": "dvattiṃsavaralakkhaṇo.",
"bv12:30.1": "Kuṭṭā kavāṭā bhittī ca,",
"bv12:30.2": "rukkhā nagasiluccayā;",
"bv12:30.3": "Na tassāvaraṇaṃ atthi,",
"bv12:30.4": "samantā dvādasayojane.",
"bv12:31.1": "Vassasatasahassāni,",
"bv12:31.2": "āyu vijjati tāvade;",
"bv12:31.3": "Tāvatā tiṭṭhamāno so,",
"bv12:31.4": "tāresi janataṃ bahuṃ.",
"bv12:32.1": "Santāretvā bahujanaṃ,",
"bv12:32.2": "chinditvā sabbasaṃsayaṃ;",
"bv12:32.3": "Jalitvā aggikkhandhova,",
"bv12:32.4": "nibbuto so sasāvako.",
"bv12:33.1": "Padumuttaro jino buddho,",
"bv12:33.2": "Nandārāmamhi nibbuto;",
"bv12:33.3": "Tatthevassa thūpavaro,",
"bv12:33.4": "Dvādasubbedhayojano”ti. #584",
"bv12:34.1": "Padumuttarassa bhagavato vaṃso dasamo."
}