{
"bv27:1.1": "Buddhavaṃsa",
"bv27:2.1": "27. Gotamabuddhavaṃsa",
"bv27:3.1": "“Ahametarahi sambuddho,",
"bv27:3.2": "gotamo sakyavaḍḍhano;",
"bv27:3.3": "Padhānaṃ padahitvāna,",
"bv27:3.4": "patto sambodhimuttamaṃ.",
"bv27:4.1": "Brahmunā yācito santo,",
"bv27:4.2": "dhammacakkaṃ pavattayiṃ;",
"bv27:4.3": "Aṭṭhārasannaṃ koṭīnaṃ,",
"bv27:4.4": "paṭhamābhisamayo ahu.",
"bv27:5.1": "Tato parañca desente,",
"bv27:5.2": "naradevasamāgame;",
"bv27:5.3": "Gaṇanāya na vattabbo,",
"bv27:5.4": "dutiyābhisamayo ahu.",
"bv27:6.1": "Idhevāhaṃ etarahi,",
"bv27:6.2": "ovadiṃ mama atrajaṃ;",
"bv27:6.3": "Gaṇanāya na vattabbo,",
"bv27:6.4": "tatiyābhisamayo ahu.",
"bv27:7.1": "Ekosi sannipāto me,",
"bv27:7.2": "sāvakānaṃ mahesinaṃ;",
"bv27:7.3": "Aḍḍhateḷasasatānaṃ,",
"bv27:7.4": "bhikkhūnāsi samāgamo.",
"bv27:8.1": "Virocamāno vimalo,",
"bv27:8.2": "bhikkhusaṃghassa majjhago;",
"bv27:8.3": "Dadāmi patthitaṃ sabbaṃ,",
"bv27:8.4": "maṇīva sabbakāmado.",
"bv27:9.1": "Phalamākaṅkhamānānaṃ,",
"bv27:9.2": "bhavacchandajahesinaṃ;",
"bv27:9.3": "Catusaccaṃ pakāsemi,",
"bv27:9.4": "anukampāya pāṇinaṃ.",
"bv27:10.1": "Dasavīsasahassānaṃ,",
"bv27:10.2": "dhammābhisamayo ahu;",
"bv27:10.3": "Ekadvinnaṃ abhisamayo,",
"bv27:10.4": "gaṇanāto asaṅkhiyo.",
"bv27:11.1": "Vitthārikaṃ bāhujaññaṃ,",
"bv27:11.2": "iddhaṃ phītaṃ suphullitaṃ;",
"bv27:11.3": "Idha mayhaṃ sakyamunino,",
"bv27:11.4": "sāsanaṃ suvisodhitaṃ.",
"bv27:12.1": "Anāsavā vītarāgā,",
"bv27:12.2": "santacittā samāhitā;",
"bv27:12.3": "Bhikkhūnekasatā sabbe,",
"bv27:12.4": "parivārenti maṃ sadā.",
"bv27:13.1": "Idāni ye etarahi,",
"bv27:13.2": "jahanti mānusaṃ bhavaṃ;",
"bv27:13.3": "Appattamānasā sekhā,",
"bv27:13.4": "te bhikkhū viññugarahitā.",
"bv27:14.1": "Ariyañca santhomayantā,",
"bv27:14.2": "sadā dhammaratā janā;",
"bv27:14.3": "Bujjhissanti satimanto,",
"bv27:14.4": "saṃsārasaritaṃ gatā.",
"bv27:15.1": "Nagaraṃ kapilavatthu me,",
"bv27:15.2": "rājā suddhodano pitā;",
"bv27:15.3": "Mayhaṃ janettikā mātā,",
"bv27:15.4": "māyādevīti vuccati.",
"bv27:16.1": "Ekūnatiṃsavassāni,",
"bv27:16.2": "agāraṃ ajjhahaṃ vasiṃ;",
"bv27:16.3": "Rammo surammo subhako,",
"bv27:16.4": "tayo pāsādamuttamā.",
"bv27:17.1": "Cattārīsasahassāni,",
"bv27:17.2": "nāriyo samalaṅkatā;",
"bv27:17.3": "Bhaddakañcanā nāma nārī,",
"bv27:17.4": "rāhulo nāma atrajo.",
"bv27:18.1": "Nimitte caturo disvā,",
"bv27:18.2": "assayānena nikkhamiṃ;",
"bv27:18.3": "Chabbassaṃ padhānacāraṃ,",
"bv27:18.4": "acariṃ dukkaraṃ ahaṃ.",
"bv27:19.1": "Bārāṇasiyaṃ isipatane,",
"bv27:19.2": "Cakkaṃ pavattitaṃ mayā;",
"bv27:19.3": "Ahaṃ gotamasambuddho,",
"bv27:19.4": "Saraṇaṃ sabbapāṇinaṃ.",
"bv27:20.1": "Kolito upatisso ca,",
"bv27:20.2": "dve bhikkhū aggasāvakā;",
"bv27:20.3": "Ānando nāmupaṭṭhāko,",
"bv27:20.4": "santikāvacaro mama;",
"bv27:20.5": "Khemā uppalavaṇṇā ca,",
"bv27:20.6": "bhikkhunī aggasāvikā.",
"bv27:21.1": "Citto hatthāḷavako ca,",
"bv27:21.2": "aggupaṭṭhākupāsakā;",
"bv27:21.3": "Nandamātā ca uttarā,",
"bv27:21.4": "aggupaṭṭhākupāsikā.",
"bv27:22.1": "Ahaṃ assatthamūlamhi,",
"bv27:22.2": "patto sambodhimuttamaṃ;",
"bv27:22.3": "Byāmappabhā sadā mayhaṃ,",
"bv27:22.4": "soḷasahatthamuggatā.",
"bv27:23.1": "Appaṃ vassasataṃ āyu,",
"bv27:23.2": "idānetarahi vijjati;",
"bv27:23.3": "Tāvatā tiṭṭhamānohaṃ,",
"bv27:23.4": "tāremi janataṃ bahuṃ.",
"bv27:24.1": "Ṭhapayitvāna dhammukkaṃ,",
"bv27:24.2": "pacchimaṃ janabodhanaṃ;",
"bv27:24.3": "Ahampi nacirasseva,",
"bv27:24.4": "saddhiṃ sāvakasaṃghato;",
"bv27:24.5": "Idheva parinibbissaṃ,",
"bv27:24.6": "aggīvāhārasaṅkhayā.",
"bv27:25.1": "Tāni ca atulatejāni,",
"bv27:25.2": "Imāni ca dasabalāni;",
"bv27:25.3": "Ayañca guṇadhāraṇo deho,",
"bv27:25.4": "Dvattiṃsavaralakkhaṇavicitto.",
"bv27:26.1": "Dasa disā pabhāsetvā,",
"bv27:26.2": "Sataraṃsīva chappabhā;",
"bv27:26.3": "Sabbaṃ tamantarahissanti,",
"bv27:26.4": "Nanu rittā sabbasaṅkhārā”ti. #1032",
"bv27:27.1": "Gotamassa bhagavato vaṃso pañcavīsatimo."
}