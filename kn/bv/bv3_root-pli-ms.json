{
"bv3:1.1": "Buddhavaṃsa",
"bv3:2.1": "3. Dīpaṅkarabuddhavaṃsa",
"bv3:3.1": "“Tadā te bhojayitvāna,",
"bv3:3.2": "sasaṃghaṃ lokanāyakaṃ;",
"bv3:3.3": "Upagacchuṃ saraṇaṃ tassa,",
"bv3:3.4": "dīpaṅkarassa satthuno.",
"bv3:4.1": "Saraṇāgamane kañci,",
"bv3:4.2": "nivesesi tathāgato;",
"bv3:4.3": "Kañci pañcasu sīlesu,",
"bv3:4.4": "sīle dasavidhe paraṃ.",
"bv3:5.1": "Kassaci deti sāmaññaṃ,",
"bv3:5.2": "caturo phalamuttame;",
"bv3:5.3": "Kassaci asame dhamme,",
"bv3:5.4": "deti so paṭisambhidā.",
"bv3:6.1": "Kassaci varasamāpattiyo,",
"bv3:6.2": "Aṭṭha deti narāsabho;",
"bv3:6.3": "Tisso kassaci vijjāyo,",
"bv3:6.4": "Chaḷabhiññā pavecchati.",
"bv3:7.1": "Tena yogena janakāyaṃ,",
"bv3:7.2": "ovadati mahāmuni;",
"bv3:7.3": "Tena vitthārikaṃ āsi,",
"bv3:7.4": "lokanāthassa sāsanaṃ.",
"bv3:8.1": "Mahāhanusabhakkhandho,",
"bv3:8.2": "dīpaṅkarassa nāmako;",
"bv3:8.3": "Bahū jane tārayati,",
"bv3:8.4": "parimoceti duggatiṃ.",
"bv3:9.1": "Bodhaneyyaṃ janaṃ disvā,",
"bv3:9.2": "satasahassepi yojane;",
"bv3:9.3": "Khaṇena upagantvāna,",
"bv3:9.4": "bodheti taṃ mahāmuni.",
"bv3:10.1": "Paṭhamābhisamaye buddho,",
"bv3:10.2": "koṭisatamabodhayi;",
"bv3:10.3": "Dutiyābhisamaye nātho,",
"bv3:10.4": "navutikoṭimabodhayi.",
"bv3:11.1": "Yadā ca devabhavanamhi,",
"bv3:11.2": "buddho dhammamadesayi;",
"bv3:11.3": "Navutikoṭisahassānaṃ,",
"bv3:11.4": "tatiyābhisamayo ahu.",
"bv3:12.1": "Sannipātā tayo āsuṃ,",
"bv3:12.2": "dīpaṅkarassa satthuno;",
"bv3:12.3": "Koṭisatasahassānaṃ,",
"bv3:12.4": "paṭhamo āsi samāgamo.",
"bv3:13.1": "Puna nāradakūṭamhi,",
"bv3:13.2": "pavivekagate jine;",
"bv3:13.3": "Khīṇāsavā vītamalā,",
"bv3:13.4": "samiṃsu satakoṭiyo.",
"bv3:14.1": "Yamhi kāle mahāvīro,",
"bv3:14.2": "sudassanasiluccaye;",
"bv3:14.3": "Navakoṭisahassehi,",
"bv3:14.4": "pavāresi mahāmuni.",
"bv3:15.1": "Dasavīsasahassānaṃ,",
"bv3:15.2": "dhammābhisamayo ahu;",
"bv3:15.3": "Ekadvinnaṃ abhisamayā,",
"bv3:15.4": "gaṇanāto asaṅkhiyā.",
"bv3:16.1": "Vitthārikaṃ bāhujaññaṃ,",
"bv3:16.2": "iddhaṃ phītaṃ ahū tadā;",
"bv3:16.3": "Dīpaṅkarassa bhagavato,",
"bv3:16.4": "sāsanaṃ suvisodhitaṃ.",
"bv3:17.1": "Cattāri satasahassāni,",
"bv3:17.2": "chaḷabhiññā mahiddhikā;",
"bv3:17.3": "Dīpaṅkaraṃ lokaviduṃ,",
"bv3:17.4": "parivārenti sabbadā.",
"bv3:18.1": "Ye keci tena samayena,",
"bv3:18.2": "jahanti mānusaṃ bhavaṃ;",
"bv3:18.3": "Apattamānasā sekhā,",
"bv3:18.4": "garahitā bhavanti te.",
"bv3:19.1": "Supupphitaṃ pāvacanaṃ,",
"bv3:19.2": "arahantehi tādihi;",
"bv3:19.3": "Khīṇāsavehi vimalehi,",
"bv3:19.4": "upasobhati sabbadā.",
"bv3:20.1": "Nagaraṃ rammavatī nāma,",
"bv3:20.2": "sudevo nāma khattiyo;",
"bv3:20.3": "Sumedhā nāma janikā,",
"bv3:20.4": "dīpaṅkarassa satthuno.",
"bv3:21.1": "Dasavassasahassāni,",
"bv3:21.2": "agāraṃ ajjha so vasi;",
"bv3:21.3": "Haṃsā koñcā mayūrā ca,",
"bv3:21.4": "tayo pāsādamuttamā.",
"bv3:22.1": "Tīṇi satasahassāni,",
"bv3:22.2": "nāriyo samalaṅkatā;",
"bv3:22.3": "Padumā nāma sā nārī,",
"bv3:22.4": "usabhakkhandho atrajo.",
"bv3:23.1": "Nimitte caturo disvā,",
"bv3:23.2": "hatthiyānena nikkhami;",
"bv3:23.3": "Anūnadasamāsāni,",
"bv3:23.4": "padhāne padahī jino.",
"bv3:24.1": "Padhānacāraṃ caritvāna,",
"bv3:24.2": "abujjhi mānasaṃ muni;",
"bv3:24.3": "Brahmunā yācito santo,",
"bv3:24.4": "dīpaṅkaro mahāmuni.",
"bv3:25.1": "Vatti cakkaṃ mahāvīro,",
"bv3:25.2": "nandārāme sirīghare;",
"bv3:25.3": "Nisinno sirīsamūlamhi,",
"bv3:25.4": "akā titthiyamaddanaṃ.",
"bv3:26.1": "Sumaṅgalo ca tisso ca,",
"bv3:26.2": "ahesuṃ aggasāvakā;",
"bv3:26.3": "Sāgato nāmupaṭṭhāko,",
"bv3:26.4": "dīpaṅkarassa satthuno.",
"bv3:27.1": "Nandā ceva sunandā ca,",
"bv3:27.2": "ahesuṃ aggasāvikā;",
"bv3:27.3": "Bodhi tassa bhagavato,",
"bv3:27.4": "pipphalīti pavuccati.",
"bv3:28.1": "Tapussabhallikā nāma,",
"bv3:28.2": "ahesuṃ aggupaṭṭhakā;",
"bv3:28.3": "Sirimā koṇā upaṭṭhikā,",
"bv3:28.4": "dīpaṅkarassa satthuno.",
"bv3:29.1": "Asītihatthamubbedho,",
"bv3:29.2": "dīpaṅkaro mahāmuni;",
"bv3:29.3": "Sobhati dīparukkhova,",
"bv3:29.4": "sālarājāva phullito.",
"bv3:30.1": "Satasahassavassāni,",
"bv3:30.2": "āyu tassa mahesino;",
"bv3:30.3": "Tāvatā tiṭṭhamāno so,",
"bv3:30.4": "tāresi janataṃ bahuṃ.",
"bv3:31.1": "Jotayitvāna saddhammaṃ,",
"bv3:31.2": "santāretvā mahājanaṃ;",
"bv3:31.3": "Jalitvā aggikkhandhova,",
"bv3:31.4": "nibbuto so sasāvako.",
"bv3:32.1": "Sā ca iddhi so ca yaso,",
"bv3:32.2": "Tāni ca pādesu cakkaratanāni;",
"bv3:32.3": "Sabbaṃ tamantarahitaṃ,",
"bv3:32.4": "Nanu rittā sabbasaṅkhārā.",
"bv3:33.1": "Dīpaṅkaro jino satthā,",
"bv3:33.2": "Nandārāmamhi nibbuto;",
"bv3:33.3": "Tatthevassa jinathūpo,",
"bv3:33.4": "Chattiṃsubbedhayojano”ti. #299",
"bv3:34.1": "Dīpaṅkarassa bhagavato vaṃso paṭhamo."
}