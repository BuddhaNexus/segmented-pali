{
"bv5:1.1": "Buddhavaṃsa",
"bv5:2.1": "5. Maṅgalabuddhavaṃsa",
"bv5:3.1": "“Koṇḍaññassa aparena,",
"bv5:3.2": "maṅgalo nāma nāyako;",
"bv5:3.3": "Tamaṃ loke nihantvāna,",
"bv5:3.4": "dhammokkamabhidhārayi.",
"bv5:4.1": "Atulāsi pabhā tassa,",
"bv5:4.2": "jinehaññehi uttariṃ;",
"bv5:4.3": "Candasūriyapabhaṃ hantvā,",
"bv5:4.4": "dasasahassī virocati.",
"bv5:5.1": "Sopi buddho pakāsesi,",
"bv5:5.2": "caturo saccavaruttame;",
"bv5:5.3": "Te te saccarasaṃ pītvā,",
"bv5:5.4": "vinodenti mahātamaṃ.",
"bv5:6.1": "Patvāna bodhimatulaṃ,",
"bv5:6.2": "paṭhame dhammadesane;",
"bv5:6.3": "Koṭisatasahassānaṃ,",
"bv5:6.4": "dhammābhisamayo ahu.",
"bv5:7.1": "Surindadevabhavane,",
"bv5:7.2": "buddho dhammamadesayi;",
"bv5:7.3": "Tadā koṭisahassānaṃ,",
"bv5:7.4": "dutiyo samayo ahu.",
"bv5:8.1": "Yadā sunando cakkavattī,",
"bv5:8.2": "sambuddhaṃ upasaṅkami;",
"bv5:8.3": "Tadā āhani sambuddho,",
"bv5:8.4": "dhammabheriṃ varuttamaṃ.",
"bv5:9.1": "Sunandassānucarā janatā,",
"bv5:9.2": "Tadāsuṃ navutikoṭiyo;",
"bv5:9.3": "Sabbepi te niravasesā,",
"bv5:9.4": "Ahesuṃ ehi bhikkhukā.",
"bv5:10.1": "Sannipātā tayo āsuṃ,",
"bv5:10.2": "maṅgalassa mahesino;",
"bv5:10.3": "Koṭisatasahassānaṃ,",
"bv5:10.4": "paṭhamo āsi samāgamo.",
"bv5:11.1": "Dutiyo koṭisatasahassānaṃ,",
"bv5:11.2": "Tatiyo navutikoṭinaṃ;",
"bv5:11.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv5:11.4": "Tadā āsi samāgamo.",
"bv5:12.1": "Ahaṃ tena samayena,",
"bv5:12.2": "surucī nāma brāhmaṇo;",
"bv5:12.3": "Ajjhāyako mantadharo,",
"bv5:12.4": "tiṇṇaṃ vedāna pāragū.",
"bv5:13.1": "Tamahaṃ upasaṅkamma,",
"bv5:13.2": "Saraṇaṃ gantvāna satthuno;",
"bv5:13.3": "Sambuddhappamukhaṃ saṃghaṃ,",
"bv5:13.4": "Gandhamālena pūjayiṃ;",
"bv5:13.5": "Pūjetvā gandhamālena,",
"bv5:13.6": "Gavapānena tappayiṃ.",
"bv5:14.1": "Sopi maṃ buddho byākāsi,",
"bv5:14.2": "maṅgalo dvipaduttamo;",
"bv5:14.3": "‘Aparimeyyito kappe,",
"bv5:14.4": "ayaṃ buddho bhavissati.",
"bv5:15.1": "Padhānaṃ padahitvāna, … pe …",
"bv5:15.4": "hessāma sammukhā imaṃ’.",
"bv5:16.1": "Tassāpi vacanaṃ sutvā,",
"bv5:16.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv5:16.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv5:16.4": "dasapāramipūriyā.",
"bv5:17.1": "Tadā pītimanubrūhanto,",
"bv5:17.2": "sambodhivarapattiyā;",
"bv5:17.3": "Buddhe datvāna maṃ gehaṃ,",
"bv5:17.4": "pabbajiṃ tassa santike.",
"bv5:18.1": "Suttantaṃ vinayañcāpi,",
"bv5:18.2": "navaṅgaṃ satthusāsanaṃ;",
"bv5:18.3": "Sabbaṃ pariyāpuṇitvā,",
"bv5:18.4": "sobhayiṃ jinasāsanaṃ.",
"bv5:19.1": "Tatthappamatto viharanto,",
"bv5:19.2": "brahmaṃ bhāvetva bhāvanaṃ;",
"bv5:19.3": "Abhiññāpāramiṃ gantvā,",
"bv5:19.4": "brahmalokamagacchahaṃ.",
"bv5:20.1": "Uttaraṃ nāma nagaraṃ,",
"bv5:20.2": "uttaro nāma khattiyo;",
"bv5:20.3": "Uttarā nāma janikā,",
"bv5:20.4": "maṅgalassa mahesino.",
"bv5:21.1": "Navavassasahassāni,",
"bv5:21.2": "agāraṃ ajjha so vasi;",
"bv5:21.3": "Yasavā sucimā sirīmā,",
"bv5:21.4": "tayo pāsādamuttamā.",
"bv5:22.1": "Samatiṃsasahassāni,",
"bv5:22.2": "nāriyo samalaṅkatā;",
"bv5:22.3": "Yasavatī nāma nārī,",
"bv5:22.4": "sīvalo nāma atrajo.",
"bv5:23.1": "Nimitte caturo disvā,",
"bv5:23.2": "assayānena nikkhami;",
"bv5:23.3": "Anūnaaṭṭhamāsāni,",
"bv5:23.4": "padhānaṃ padahī jino.",
"bv5:24.1": "Brahmunā yācito santo,",
"bv5:24.2": "maṅgalo nāma nāyako;",
"bv5:24.3": "Vatti cakkaṃ mahāvīro,",
"bv5:24.4": "vane sirīvaruttame.",
"bv5:25.1": "Sudevo dhammaseno ca,",
"bv5:25.2": "ahesuṃ aggasāvakā;",
"bv5:25.3": "Pālito nāmupaṭṭhāko,",
"bv5:25.4": "maṅgalassa mahesino.",
"bv5:26.1": "Sīvalā ca asokā ca,",
"bv5:26.2": "ahesuṃ aggasāvikā;",
"bv5:26.3": "Bodhi tassa bhagavato,",
"bv5:26.4": "nāgarukkhoti vuccati.",
"bv5:27.1": "Nando ceva visākho ca,",
"bv5:27.2": "ahesuṃ aggupaṭṭhakā;",
"bv5:27.3": "Anulā ceva sutanā ca,",
"bv5:27.4": "ahesuṃ aggupaṭṭhikā.",
"bv5:28.1": "Aṭṭhāsīti ratanāni,",
"bv5:28.2": "accuggato mahāmuni;",
"bv5:28.3": "Tato niddhāvatī raṃsī,",
"bv5:28.4": "anekasatasahassiyo.",
"bv5:29.1": "Navutivassasahassāni,",
"bv5:29.2": "āyu vijjati tāvade;",
"bv5:29.3": "Tāvatā tiṭṭhamāno so,",
"bv5:29.4": "tāresi janataṃ bahuṃ.",
"bv5:30.1": "Yathāpi sāgare ūmī,",
"bv5:30.2": "na sakkā tā gaṇetuye;",
"bv5:30.3": "Tatheva sāvakā tassa,",
"bv5:30.4": "na sakkā te gaṇetuye.",
"bv5:31.1": "Yāva aṭṭhāsi sambuddho,",
"bv5:31.2": "maṅgalo lokanāyako;",
"bv5:31.3": "Na tassa sāsane atthi,",
"bv5:31.4": "sakilesamaraṇaṃ tadā.",
"bv5:32.1": "Dhammokkaṃ dhārayitvāna,",
"bv5:32.2": "santāretvā mahājanaṃ;",
"bv5:32.3": "Jalitvā dhūmaketūva,",
"bv5:32.4": "nibbuto so mahāyaso.",
"bv5:33.1": "Saṅkhārānaṃ sabhāvatthaṃ,",
"bv5:33.2": "dassayitvā sadevake;",
"bv5:33.3": "Jalitvā aggikkhandhova,",
"bv5:33.4": "sūriyo atthaṅgato yathā.",
"bv5:34.1": "Uyyāne vassare nāma,",
"bv5:34.2": "Buddho nibbāyi maṅgalo;",
"bv5:34.3": "Tatthevassa jinathūpo,",
"bv5:34.4": "Tiṃsayojanamuggato”ti. #369",
"bv5:35.1": "Maṅgalassa bhagavato vaṃso tatiyo."
}