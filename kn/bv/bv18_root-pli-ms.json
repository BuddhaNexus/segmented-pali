{
"bv18:1.1": "Buddhavaṃsa",
"bv18:2.1": "18. Siddhatthabuddhavaṃsa",
"bv18:3.1": "“Dhammadassissa aparena,",
"bv18:3.2": "siddhattho nāma nāyako;",
"bv18:3.3": "Nihanitvā tamaṃ sabbaṃ,",
"bv18:3.4": "sūriyo abbhuggato yathā.",
"bv18:4.1": "Sopi patvāna sambodhiṃ,",
"bv18:4.2": "santārento sadevakaṃ;",
"bv18:4.3": "Abhivassi dhammameghena,",
"bv18:4.4": "nibbāpento sadevakaṃ.",
"bv18:5.1": "Tassāpi atulatejassa,",
"bv18:5.2": "Ahesuṃ abhisamayā tayo;",
"bv18:5.3": "Koṭisatasahassānaṃ,",
"bv18:5.4": "Paṭhamābhisamayo ahu.",
"bv18:6.1": "Punāparaṃ bhīmarathe,",
"bv18:6.2": "yadā āhani dundubhiṃ;",
"bv18:6.3": "Tadā navutikoṭīnaṃ,",
"bv18:6.4": "dutiyābhisamayo ahu.",
"bv18:7.1": "Yadā buddho dhammaṃ desesi,",
"bv18:7.2": "vebhāre so puruttame;",
"bv18:7.3": "Tadā navutikoṭīnaṃ,",
"bv18:7.4": "tatiyābhisamayo ahu.",
"bv18:8.1": "Sannipātā tayo āsuṃ,",
"bv18:8.2": "tasmimpi dvipaduttame;",
"bv18:8.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv18:8.4": "santacittāna tādinaṃ.",
"bv18:9.1": "Koṭisatānaṃ navutīnaṃ,",
"bv18:9.2": "asītiyāpi ca koṭinaṃ;",
"bv18:9.3": "Ete āsuṃ tayo ṭhānā,",
"bv18:9.4": "vimalānaṃ samāgame.",
"bv18:10.1": "Ahaṃ tena samayena,",
"bv18:10.2": "maṅgalo nāma tāpaso;",
"bv18:10.3": "Uggatejo duppasaho,",
"bv18:10.4": "abhiññābalasamāhito.",
"bv18:11.1": "Jambuto phalamānetvā,",
"bv18:11.2": "siddhatthassa adāsahaṃ;",
"bv18:11.3": "Paṭiggahetvā sambuddho,",
"bv18:11.4": "idaṃ vacanamabravi.",
"bv18:12.1": "‘Passatha imaṃ tāpasaṃ,",
"bv18:12.2": "jaṭilaṃ uggatāpanaṃ;",
"bv18:12.3": "Catunnavutito kappe,",
"bv18:12.4": "ayaṃ buddho bhavissati.",
"bv18:13.1": "Padhānaṃ padahitvāna, … pe …",
"bv18:13.4": "hessāma sammukhā imaṃ’.",
"bv18:14.1": "Tassāpi vacanaṃ sutvā,",
"bv18:14.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv18:14.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv18:14.4": "dasapāramipūriyā.",
"bv18:15.1": "Vebhāraṃ nāma nagaraṃ,",
"bv18:15.2": "udeno nāma khattiyo;",
"bv18:15.3": "Suphassā nāma janikā,",
"bv18:15.4": "siddhatthassa mahesino.",
"bv18:16.1": "Dasavassasahassāni,",
"bv18:16.2": "agāraṃ ajjha so vasi;",
"bv18:16.3": "Kokāsuppalakokanadā,",
"bv18:16.4": "tayo pāsādamuttamā.",
"bv18:17.1": "Tisoḷasasahassāni,",
"bv18:17.2": "nāriyo samalaṅkatā;",
"bv18:17.3": "Somanassā nāma sā nārī,",
"bv18:17.4": "anūpamo nāma atrajo.",
"bv18:18.1": "Nimitte caturo disvā,",
"bv18:18.2": "sivikāyābhinikkhami;",
"bv18:18.3": "Anūnadasamāsāni,",
"bv18:18.4": "padhānaṃ padahī jino.",
"bv18:19.1": "Brahmunā yācito santo,",
"bv18:19.2": "siddhattho lokanāyako;",
"bv18:19.3": "Vatti cakkaṃ mahāvīro,",
"bv18:19.4": "migadāye naruttamo.",
"bv18:20.1": "Sambalo ca sumitto ca,",
"bv18:20.2": "ahesuṃ aggasāvakā;",
"bv18:20.3": "Revato nāmupaṭṭhāko,",
"bv18:20.4": "siddhatthassa mahesino.",
"bv18:21.1": "Sīvalā ca surāmā ca,",
"bv18:21.2": "ahesuṃ aggasāvikā;",
"bv18:21.3": "Bodhi tassa bhagavato,",
"bv18:21.4": "kaṇikāroti vuccati.",
"bv18:22.1": "Suppiyo ca samuddo ca,",
"bv18:22.2": "ahesuṃ aggupaṭṭhakā;",
"bv18:22.3": "Rammā ceva surammā ca,",
"bv18:22.4": "ahesuṃ aggupaṭṭhikā.",
"bv18:23.1": "So buddho saṭṭhiratanaṃ,",
"bv18:23.2": "ahosi nabhamuggato;",
"bv18:23.3": "Kañcanagghiyasaṅkāso,",
"bv18:23.4": "dasasahassī virocati.",
"bv18:24.1": "Sopi buddho asamasamo,",
"bv18:24.2": "atulo appaṭipuggalo;",
"bv18:24.3": "Vassasatasahassāni,",
"bv18:24.4": "loke aṭṭhāsi cakkhumā.",
"bv18:25.1": "Vipulaṃ pabhaṃ dassayitvā,",
"bv18:25.2": "pupphāpetvāna sāvake;",
"bv18:25.3": "Vilāsetvā samāpatyā,",
"bv18:25.4": "nibbuto so sasāvako.",
"bv18:26.1": "Siddhattho munivaro buddho,",
"bv18:26.2": "Anomārāmamhi nibbuto;",
"bv18:26.3": "Tatthevassa thūpavaro,",
"bv18:26.4": "Catuyojanamuggato”ti. #753",
"bv18:27.1": "Siddhatthassa bhagavato vaṃso soḷasamo."
}