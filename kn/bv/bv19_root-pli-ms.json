{
"bv19:1.1": "Buddhavaṃsa",
"bv19:2.1": "19. Tissabuddhavaṃsa",
"bv19:3.1": "“Siddhatthassa aparena,",
"bv19:3.2": "Asamo appaṭipuggalo;",
"bv19:3.3": "Anantatejo amitayaso,",
"bv19:3.4": "Tisso lokagganāyako.",
"bv19:4.1": "Tamandhakāraṃ vidhamitvā,",
"bv19:4.2": "obhāsetvā sadevakaṃ;",
"bv19:4.3": "Anukampako mahāvīro,",
"bv19:4.4": "loke uppajji cakkhumā.",
"bv19:5.1": "Tassāpi atulā iddhi,",
"bv19:5.2": "atulaṃ sīlaṃ samādhi ca;",
"bv19:5.3": "Sabbattha pāramiṃ gantvā,",
"bv19:5.4": "dhammacakkaṃ pavattayi.",
"bv19:6.1": "So buddho dasasahassimhi,",
"bv19:6.2": "Viññāpesi giraṃ suciṃ;",
"bv19:6.3": "Koṭisatāni abhisamiṃsu,",
"bv19:6.4": "Paṭhame dhammadesane.",
"bv19:7.1": "Dutiyo navutikoṭīnaṃ,",
"bv19:7.2": "tatiyo saṭṭhikoṭiyo;",
"bv19:7.3": "Bandhanāto pamocesi,",
"bv19:7.4": "satte naramarū tadā.",
"bv19:8.1": "Sannipātā tayo āsuṃ,",
"bv19:8.2": "tisse lokagganāyake;",
"bv19:8.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv19:8.4": "santacittāna tādinaṃ.",
"bv19:9.1": "Khīṇāsavasatasahassānaṃ,",
"bv19:9.2": "Paṭhamo āsi samāgamo;",
"bv19:9.3": "Navutisatasahassānaṃ,",
"bv19:9.4": "Dutiyo āsi samāgamo.",
"bv19:10.1": "Asītisatasahassānaṃ,",
"bv19:10.2": "tatiyo āsi samāgamo;",
"bv19:10.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv19:10.4": "pupphitānaṃ vimuttiyā.",
"bv19:11.1": "Ahaṃ tena samayena,",
"bv19:11.2": "sujāto nāma khattiyo;",
"bv19:11.3": "Mahābhogaṃ chaḍḍayitvā,",
"bv19:11.4": "pabbajiṃ isipabbajaṃ.",
"bv19:12.1": "Mayi pabbajite sante,",
"bv19:12.2": "uppajji lokanāyako;",
"bv19:12.3": "Buddhoti saddaṃ sutvāna,",
"bv19:12.4": "pīti me upapajjatha.",
"bv19:13.1": "Dibbaṃ mandāravaṃ pupphaṃ,",
"bv19:13.2": "padumaṃ pārichattakaṃ;",
"bv19:13.3": "Ubho hatthehi paggayha,",
"bv19:13.4": "dhunamāno upāgamiṃ.",
"bv19:14.1": "Catuvaṇṇaparivutaṃ,",
"bv19:14.2": "tissaṃ lokagganāyakaṃ;",
"bv19:14.3": "Tamahaṃ pupphaṃ gahetvā,",
"bv19:14.4": "matthake dhārayiṃ jinaṃ.",
"bv19:15.1": "Sopi maṃ buddho byākāsi,",
"bv19:15.2": "janamajjhe nisīdiya;",
"bv19:15.3": "‘Dvenavute ito kappe,",
"bv19:15.4": "ayaṃ buddho bhavissati.",
"bv19:16.1": "Padhānaṃ padahitvāna, … pe …",
"bv19:16.4": "hessāma sammukhā imaṃ’.",
"bv19:17.1": "Tassāpi vacanaṃ sutvā,",
"bv19:17.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv19:17.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv19:17.4": "dasapāramipūriyā.",
"bv19:18.1": "Khemakaṃ nāma nagaraṃ,",
"bv19:18.2": "janasandho nāma khattiyo;",
"bv19:18.3": "Padumā nāma janikā,",
"bv19:18.4": "tissassa ca mahesino.",
"bv19:19.1": "Sattavassasahassāni,",
"bv19:19.2": "Agāraṃ ajjha so vasi;",
"bv19:19.3": "Guhāsela nārisaya nisabhā,",
"bv19:19.4": "Tayo pāsādamuttamā.",
"bv19:20.1": "Samatiṃsasahassāni,",
"bv19:20.2": "nāriyo samalaṅkatā;",
"bv19:20.3": "Subhaddānāmikā nārī,",
"bv19:20.4": "ānando nāma atrajo.",
"bv19:21.1": "Nimitte caturo disvā,",
"bv19:21.2": "assayānena nikkhami;",
"bv19:21.3": "Anūnaaṭṭhamāsāni,",
"bv19:21.4": "padhānaṃ padahī jino.",
"bv19:22.1": "Brahmunā yācito santo,",
"bv19:22.2": "tisso lokagganāyako;",
"bv19:22.3": "Vatti cakkaṃ mahāvīro,",
"bv19:22.4": "yasavatiyamuttame.",
"bv19:23.1": "Brahmadevo udayo ca,",
"bv19:23.2": "ahesuṃ aggasāvakā;",
"bv19:23.3": "Samaṅgo nāmupaṭṭhāko,",
"bv19:23.4": "tissassa ca mahesino.",
"bv19:24.1": "Phussā ceva sudattā ca,",
"bv19:24.2": "ahesuṃ aggasāvikā;",
"bv19:24.3": "Bodhi tassa bhagavato,",
"bv19:24.4": "asanoti pavuccati.",
"bv19:25.1": "Sambalo ca sirimā ceva,",
"bv19:25.2": "ahesuṃ aggupaṭṭhakā;",
"bv19:25.3": "Kisāgotamī upasenā,",
"bv19:25.4": "ahesuṃ aggupaṭṭhikā.",
"bv19:26.1": "So buddho saṭṭhiratano,",
"bv19:26.2": "ahu uccattane jino;",
"bv19:26.3": "Anūpamo asadiso,",
"bv19:26.4": "himavā viya dissati.",
"bv19:27.1": "Tassāpi atulatejassa,",
"bv19:27.2": "āyu āsi anuttaro;",
"bv19:27.3": "Vassasatasahassāni,",
"bv19:27.4": "loke aṭṭhāsi cakkhumā.",
"bv19:28.1": "Uttamaṃ pavaraṃ seṭṭhaṃ,",
"bv19:28.2": "anubhotvā mahāyasaṃ;",
"bv19:28.3": "Jalitvā aggikkhandhova,",
"bv19:28.4": "nibbuto so sasāvako.",
"bv19:29.1": "Valāhakova anilena,",
"bv19:29.2": "sūriyena viya ussavo;",
"bv19:29.3": "Andhakārova padīpena,",
"bv19:29.4": "nibbuto so sasāvako.",
"bv19:30.1": "Tisso jinavaro buddho,",
"bv19:30.2": "Nandārāmamhi nibbuto;",
"bv19:30.3": "Tatthevassa jinathūpo,",
"bv19:30.4": "Tīṇiyojanamuggato”ti. #781",
"bv19:31.1": "Tissassa bhagavato vaṃso sattarasamo."
}