{
"bv1:1.1": "Buddhavaṃsa",
"bv1:2.1": "1. Ratanacaṅkamanakaṇḍa",
"bv1:3.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
"bv1:4.1": "Brahmā ca lokādhipatī sahampatī,",
"bv1:4.2": "Katañjalī anadhivaraṃ ayācatha;",
"bv1:4.3": "“Santīdha sattāpparajakkhajātikā,",
"bv1:4.4": "Desehi dhammaṃ anukampimaṃ pajaṃ”.",
"bv1:5.1": "Sampannavijjācaraṇassa tādino,",
"bv1:5.2": "Jutindharassantimadehadhārino;",
"bv1:5.3": "Tathāgatassappaṭipuggalassa,",
"bv1:5.4": "Uppajji kāruññatā sabbasatte.",
"bv1:6.1": "“Na hete jānanti sadevamānusā,",
"bv1:6.2": "Buddho ayaṃ kīdisako naruttamo;",
"bv1:6.3": "Iddhibalaṃ paññābalañca kīdisaṃ,",
"bv1:6.4": "Buddhabalaṃ lokahitassa kīdisaṃ.",
"bv1:7.1": "Na hete jānanti sadevamānusā,",
"bv1:7.2": "Buddho ayaṃ edisako naruttamo;",
"bv1:7.3": "Iddhibalaṃ paññābalañca edisaṃ,",
"bv1:7.4": "Buddhabalaṃ lokahitassa edisaṃ.",
"bv1:8.1": "Handāhaṃ dassayissāmi,",
"bv1:8.2": "buddhabalamanuttaraṃ;",
"bv1:8.3": "Caṅkamaṃ māpayissāmi,",
"bv1:8.4": "nabhe ratanamaṇḍitaṃ”.",
"bv1:9.1": "Bhummā mahārājikā tāvatiṃsā,",
"bv1:9.2": "Yāmā ca devā tusitā ca nimmitā;",
"bv1:9.3": "Paranimmitā yepi ca brahmakāyikā,",
"bv1:9.4": "Ānanditā vipulamakaṃsu ghosaṃ.",
"bv1:10.1": "Obhāsitā ca pathavī sadevakā,",
"bv1:10.2": "Puthū ca lokantarikā asaṃvutā;",
"bv1:10.3": "Tamo ca tibbo vihato tadā ahu,",
"bv1:10.4": "Disvāna accherakaṃ pāṭihīraṃ.",
"bv1:11.1": "Sadevagandhabbamanussarakkhase,",
"bv1:11.2": "Ābhā uḷārā vipulā ajāyatha;",
"bv1:11.3": "Imasmiṃ loke parasmiñcobhayasmiṃ,",
"bv1:11.4": "Adho ca uddhaṃ tiriyañca vitthataṃ.",
"bv1:12.1": "Sattuttamo anadhivaro vināyako,",
"bv1:12.2": "Satthā ahū devamanussapūjito;",
"bv1:12.3": "Mahānubhāvo satapuññalakkhaṇo,",
"bv1:12.4": "Dassesi accherakaṃ pāṭihīraṃ.",
"bv1:13.1": "So yācito devavarena cakkhumā,",
"bv1:13.2": "Atthaṃ samekkhitvā tadā naruttamo;",
"bv1:13.3": "Caṅkamaṃ māpayi lokanāyako,",
"bv1:13.4": "Suniṭṭhitaṃ sabbaratananimmitaṃ.",
"bv1:14.1": "Iddhī ca ādesanānusāsanī,",
"bv1:14.2": "Tipāṭihīre bhagavā vasī ahu;",
"bv1:14.3": "Caṅkamaṃ māpayi lokanāyako,",
"bv1:14.4": "Suniṭṭhitaṃ sabbaratananimmitaṃ.",
"bv1:15.1": "Dasasahassīlokadhātuyā,",
"bv1:15.2": "Sinerupabbatuttame;",
"bv1:15.3": "Thambheva dassesi paṭipāṭiyā,",
"bv1:15.4": "Caṅkame ratanāmaye.",
"bv1:16.1": "Dasasahassī atikkamma,",
"bv1:16.2": "caṅkamaṃ māpayī jino;",
"bv1:16.3": "Sabbasoṇṇamayā passe,",
"bv1:16.4": "caṅkame ratanāmaye.",
"bv1:17.1": "Tulāsaṅghāṭānuvaggā,",
"bv1:17.2": "sovaṇṇaphalakatthatā;",
"bv1:17.3": "Vedikā sabbasovaṇṇā,",
"bv1:17.4": "dubhato passesu nimmitā.",
"bv1:18.1": "Maṇimuttāvālikākiṇṇā,",
"bv1:18.2": "nimmito ratanāmayo;",
"bv1:18.3": "Obhāseti disā sabbā,",
"bv1:18.4": "sataraṃsīva uggato.",
"bv1:19.1": "Tasmiṃ caṅkamane dhīro,",
"bv1:19.2": "dvattiṃsavaralakkhaṇo;",
"bv1:19.3": "Virocamāno sambuddho,",
"bv1:19.4": "caṅkame caṅkamī jino.",
"bv1:20.1": "Dibbaṃ mandāravaṃ pupphaṃ,",
"bv1:20.2": "padumaṃ pārichattakaṃ;",
"bv1:20.3": "Caṅkamane okiranti,",
"bv1:20.4": "sabbe devā samāgatā.",
"bv1:21.1": "Passanti taṃ devasaṅghā,",
"bv1:21.2": "dasasahassī pamoditā;",
"bv1:21.3": "Namassamānā nipatanti,",
"bv1:21.4": "tuṭṭhahaṭṭhā pamoditā.",
"bv1:22.1": "Tāvatiṃsā ca yāmā ca,",
"bv1:22.2": "tusitā cāpi devatā;",
"bv1:22.3": "Nimmānaratino devā,",
"bv1:22.4": "ye devā vasavattino;",
"bv1:22.5": "Udaggacittā sumanā,",
"bv1:22.6": "passanti lokanāyakaṃ.",
"bv1:23.1": "Sadevagandhabbamanussarakkhasā,",
"bv1:23.2": "Nāgā supaṇṇā atha vāpi kinnarā;",
"bv1:23.3": "Passanti taṃ lokahitānukampakaṃ,",
"bv1:23.4": "Nabheva accuggatacandamaṇḍalaṃ.",
"bv1:24.1": "Ābhassarā subhakiṇhā,",
"bv1:24.2": "Vehapphalā akaniṭṭhā ca devatā;",
"bv1:24.3": "Susuddhasukkavatthavasanā,",
"bv1:24.4": "Tiṭṭhanti pañjalīkatā.",
"bv1:25.1": "Muñcanti pupphaṃ pana pañcavaṇṇikaṃ,",
"bv1:25.2": "Mandāravaṃ candanacuṇṇamissitaṃ;",
"bv1:25.3": "Bhamenti celāni ca ambare tadā,",
"bv1:25.4": "“Aho jino lokahitānukampako.",
"bv1:26.1": "Tuvaṃ satthā ca ketū ca,",
"bv1:26.2": "dhajo yūpo ca pāṇinaṃ;",
"bv1:26.3": "Parāyaṇo patiṭṭhā ca,",
"bv1:26.4": "dīpo ca dvipaduttamo”.",
"bv1:27.1": "Dasasahassīlokadhātuyā,",
"bv1:27.2": "Devatāyo mahiddhikā;",
"bv1:27.3": "Parivāretvā namassanti,",
"bv1:27.4": "Tuṭṭhahaṭṭhā pamoditā.",
"bv1:28.1": "Devatā devakaññā ca,",
"bv1:28.2": "pasannā tuṭṭhamānasā;",
"bv1:28.3": "Pañcavaṇṇikapupphehi,",
"bv1:28.4": "pūjayanti narāsabhaṃ.",
"bv1:29.1": "Passanti taṃ devasaṅghā,",
"bv1:29.2": "pasannā tuṭṭhamānasā;",
"bv1:29.3": "Pañcavaṇṇikapupphehi,",
"bv1:29.4": "pūjayanti narāsabhaṃ.",
"bv1:30.1": "“Aho acchariyaṃ loke,",
"bv1:30.2": "abbhutaṃ lomahaṃsanaṃ;",
"bv1:30.3": "Na medisaṃ bhūtapubbaṃ,",
"bv1:30.4": "accheraṃ lomahaṃsanaṃ”.",
"bv1:31.1": "Sakasakamhi bhavane,",
"bv1:31.2": "nisīditvāna devatā;",
"bv1:31.3": "Hasanti tā mahāhasitaṃ,",
"bv1:31.4": "disvānaccherakaṃ nabhe.",
"bv1:32.1": "Ākāsaṭṭhā ca bhūmaṭṭhā,",
"bv1:32.2": "tiṇapanthanivāsino;",
"bv1:32.3": "Katañjalī namassanti,",
"bv1:32.4": "tuṭṭhahaṭṭhā pamoditā.",
"bv1:33.1": "Yepi dīghāyukā nāgā,",
"bv1:33.2": "puññavanto mahiddhikā;",
"bv1:33.3": "Pamoditā namassanti,",
"bv1:33.4": "pūjayanti naruttamaṃ.",
"bv1:34.1": "Saṅgītiyo pavattenti,",
"bv1:34.2": "ambare anilañjase;",
"bv1:34.3": "Cammanaddhāni vādenti,",
"bv1:34.4": "disvānaccherakaṃ nabhe.",
"bv1:35.1": "Saṅkhā ca paṇavā ceva,",
"bv1:35.2": "athopi ḍiṇḍimā bahū;",
"bv1:35.3": "Antalikkhasmiṃ vajjanti,",
"bv1:35.4": "disvānaccherakaṃ nabhe.",
"bv1:36.1": "“Abbhuto vata no ajja,",
"bv1:36.2": "uppajji lomahaṃsano;",
"bv1:36.3": "Dhuvamatthasiddhiṃ labhāma,",
"bv1:36.4": "khaṇo no paṭipādito”.",
"bv1:37.1": "Buddhoti tesaṃ sutvāna,",
"bv1:37.2": "pīti uppajji tāvade;",
"bv1:37.3": "Buddho buddhoti kathayantā,",
"bv1:37.4": "tiṭṭhanti pañjalīkatā.",
"bv1:38.1": "Hiṅkārā sādhukārā ca,",
"bv1:38.2": "ukkuṭṭhi sampahaṃsanaṃ;",
"bv1:38.3": "Pajā ca vividhā gagane,",
"bv1:38.4": "vattenti pañjalīkatā.",
"bv1:39.1": "Gāyanti seḷenti ca vādayanti ca,",
"bv1:39.2": "Bhujāni pothenti ca naccayanti ca;",
"bv1:39.3": "Muñcanti pupphaṃ pana pañcavaṇṇikaṃ,",
"bv1:39.4": "Mandāravaṃ candanacuṇṇamissitaṃ.",
"bv1:40.1": "“Yathā tuyhaṃ mahāvīra,",
"bv1:40.2": "pādesu cakkalakkhaṇaṃ;",
"bv1:40.3": "Dhajavajirapaṭākā,",
"bv1:40.4": "vaḍḍhamānaṅkusācitaṃ.",
"bv1:41.1": "Rūpe sīle samādhimhi,",
"bv1:41.2": "paññāya ca asādiso;",
"bv1:41.3": "Vimuttiyā asamasamo,",
"bv1:41.4": "dhammacakkappavattane.",
"bv1:42.1": "Dasanāgabalaṃ kāye,",
"bv1:42.2": "tuyhaṃ pākatikaṃ balaṃ;",
"bv1:42.3": "Iddhibalena asamo,",
"bv1:42.4": "dhammacakkappavattane.",
"bv1:43.1": "Evaṃ sabbaguṇūpetaṃ,",
"bv1:43.2": "sabbaṅgasamupāgataṃ;",
"bv1:43.3": "Mahāmuniṃ kāruṇikaṃ,",
"bv1:43.4": "lokanāthaṃ namassatha.",
"bv1:44.1": "Abhivādanaṃ thomanañca,",
"bv1:44.2": "vandanañca pasaṃsanaṃ;",
"bv1:44.3": "Namassanañca pūjañca,",
"bv1:44.4": "sabbaṃ arahasī tuvaṃ.",
"bv1:45.1": "Ye keci loke vandaneyyā,",
"bv1:45.2": "vandanaṃ arahanti ye;",
"bv1:45.3": "Sabbaseṭṭho mahāvīra,",
"bv1:45.4": "sadiso te na vijjati.",
"bv1:46.1": "Sāriputto mahāpañño,",
"bv1:46.2": "samādhijjhānakovido;",
"bv1:46.3": "Gijjhakūṭe ṭhitoyeva,",
"bv1:46.4": "passati lokanāyakaṃ.",
"bv1:47.1": "Suphullaṃ sālarājaṃva,",
"bv1:47.2": "candaṃva gagane yathā;",
"bv1:47.3": "Majjhanhikeva sūriyaṃ,",
"bv1:47.4": "olokesi narāsabhaṃ.",
"bv1:48.1": "Jalantaṃ dīparukkhaṃva,",
"bv1:48.2": "Taruṇasūriyaṃva uggataṃ;",
"bv1:48.3": "Byāmappabhānurañjitaṃ,",
"bv1:48.4": "Dhīraṃ passati lokanāyakaṃ.",
"bv1:49.1": "Pañcannaṃ bhikkhusatānaṃ,",
"bv1:49.2": "katakiccāna tādinaṃ;",
"bv1:49.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv1:49.4": "khaṇena sannipātayi.",
"bv1:50.1": "Lokappasādanaṃ nāma,",
"bv1:50.2": "pāṭihīraṃ nidassayi;",
"bv1:50.3": "Amhepi tattha gantvāna,",
"bv1:50.4": "vandissāma mayaṃ jinaṃ.",
"bv1:51.1": "Etha sabbe gamissāma,",
"bv1:51.2": "pucchissāma mayaṃ jinaṃ;",
"bv1:51.3": "Kaṅkhaṃ vinodayissāma,",
"bv1:51.4": "passitvā lokanāyakaṃ”.",
"bv1:52.1": "Sādhūti te paṭissutvā,",
"bv1:52.2": "nipakā saṃvutindriyā;",
"bv1:52.3": "Pattacīvaramādāya,",
"bv1:52.4": "taramānā upāgamuṃ.",
"bv1:53.1": "Khīṇāsavehi vimalehi,",
"bv1:53.2": "dantehi uttame dame;",
"bv1:53.3": "Sāriputto mahāpañño,",
"bv1:53.4": "iddhiyā upasaṅkami.",
"bv1:54.1": "Tehi bhikkhūhi parivuto,",
"bv1:54.2": "sāriputto mahāgaṇī;",
"bv1:54.3": "Laḷanto devova gagane,",
"bv1:54.4": "iddhiyā upasaṅkami.",
"bv1:55.1": "Ukkāsitañca khipitaṃ,",
"bv1:55.2": "ajjhupekkhiya subbatā;",
"bv1:55.3": "Sagāravā sappatissā,",
"bv1:55.4": "sambuddhaṃ upasaṅkamuṃ.",
"bv1:56.1": "Upasaṅkamitvā passanti,",
"bv1:56.2": "sayambhuṃ lokanāyakaṃ;",
"bv1:56.3": "Nabhe accuggataṃ dhīraṃ,",
"bv1:56.4": "candaṃva gagane yathā.",
"bv1:57.1": "Jalantaṃ dīparukkhaṃva,",
"bv1:57.2": "vijjuṃva gagane yathā;",
"bv1:57.3": "Majjhanhikeva sūriyaṃ,",
"bv1:57.4": "passanti lokanāyakaṃ.",
"bv1:58.1": "Pañcabhikkhusatā sabbe,",
"bv1:58.2": "passanti lokanāyakaṃ;",
"bv1:58.3": "Rahadamiva vippasannaṃ,",
"bv1:58.4": "suphullaṃ padumaṃ yathā.",
"bv1:59.1": "Añjaliṃ paggahetvāna,",
"bv1:59.2": "tuṭṭhahaṭṭhā pamoditā;",
"bv1:59.3": "Namassamānā nipatanti,",
"bv1:59.4": "satthuno cakkalakkhaṇe.",
"bv1:60.1": "Sāriputto mahāpañño,",
"bv1:60.2": "koraṇḍasamasādiso;",
"bv1:60.3": "Samādhijjhānakusalo,",
"bv1:60.4": "vandate lokanāyakaṃ.",
"bv1:61.1": "Gajjitā kālameghova,",
"bv1:61.2": "nīluppalasamasādiso;",
"bv1:61.3": "Iddhibalena asamo,",
"bv1:61.4": "moggallāno mahiddhiko.",
"bv1:62.1": "Mahākassapopi ca thero,",
"bv1:62.2": "uttattakanakasannibho;",
"bv1:62.3": "Dhutaguṇe agganikkhitto,",
"bv1:62.4": "thomito satthuvaṇṇito.",
"bv1:63.1": "Dibbacakkhūnaṃ yo aggo,",
"bv1:63.2": "anuruddho mahāgaṇī;",
"bv1:63.3": "Ñātiseṭṭho bhagavato,",
"bv1:63.4": "avidūreva tiṭṭhati.",
"bv1:64.1": "Āpattianāpattiyā,",
"bv1:64.2": "satekicchāya kovido;",
"bv1:64.3": "Vinaye agganikkhitto,",
"bv1:64.4": "upāli satthuvaṇṇito.",
"bv1:65.1": "Sukhumanipuṇatthapaṭividdho,",
"bv1:65.2": "Kathikānaṃ pavaro gaṇī;",
"bv1:65.3": "Isi mantāniyā putto,",
"bv1:65.4": "Puṇṇo nāmāti vissuto.",
"bv1:66.1": "Etesaṃ cittamaññāya,",
"bv1:66.2": "opammakusalo muni;",
"bv1:66.3": "Kaṅkhacchedo mahāvīro,",
"bv1:66.4": "kathesi attano guṇaṃ.",
"bv1:67.1": "“Cattāro te asaṅkheyyā,",
"bv1:67.2": "koṭi yesaṃ na nāyati;",
"bv1:67.3": "Sattakāyo ca ākāso,",
"bv1:67.4": "cakkavāḷā canantakā;",
"bv1:67.5": "Buddhañāṇaṃ appameyyaṃ,",
"bv1:67.6": "na sakkā ete vijānituṃ.",
"bv1:68.1": "Kimetaṃ acchariyaṃ loke,",
"bv1:68.2": "yaṃ me iddhivikubbanaṃ;",
"bv1:68.3": "Aññe bahū acchariyā,",
"bv1:68.4": "abbhutā lomahaṃsanā.",
"bv1:69.1": "Yadāhaṃ tusite kāye,",
"bv1:69.2": "santusito nāmahaṃ tadā;",
"bv1:69.3": "Dasasahassī samāgamma,",
"bv1:69.4": "yācanti pañjalī mamaṃ.",
"bv1:70.1": "‘Kālo kho te mahāvīra,",
"bv1:70.2": "uppajja mātukucchiyaṃ;",
"bv1:70.3": "Sadevakaṃ tārayanto,",
"bv1:70.4": "bujjhassu amataṃ padaṃ’.",
"bv1:71.1": "Tusitā kāyā cavitvāna,",
"bv1:71.2": "yadā okkami kucchiyaṃ;",
"bv1:71.3": "Dasasahassīlokadhātu,",
"bv1:71.4": "kampittha dharaṇī tadā.",
"bv1:72.1": "Yadāhaṃ mātukucchito,",
"bv1:72.2": "sampajānova nikkhamiṃ;",
"bv1:72.3": "Sādhukāraṃ pavattenti,",
"bv1:72.4": "dasasahassī pakampatha.",
"bv1:73.1": "Okkantiṃ me samo natthi,",
"bv1:73.2": "jātito abhinikkhame;",
"bv1:73.3": "Sambodhiyaṃ ahaṃ seṭṭho,",
"bv1:73.4": "dhammacakkappavattane.",
"bv1:74.1": "Aho acchariyaṃ loke,",
"bv1:74.2": "buddhānaṃ guṇamahantatā;",
"bv1:74.3": "Dasasahassīlokadhātu,",
"bv1:74.4": "chappakāraṃ pakampatha;",
"bv1:74.5": "Obhāso ca mahā āsi,",
"bv1:74.6": "accheraṃ lomahaṃsanaṃ”.",
"bv1:75.1": "Bhagavā tamhi samaye,",
"bv1:75.2": "lokajeṭṭho narāsabho;",
"bv1:75.3": "Sadevakaṃ dassayanto,",
"bv1:75.4": "iddhiyā caṅkamī jino.",
"bv1:76.1": "Caṅkame caṅkamantova,",
"bv1:76.2": "kathesi lokanāyako;",
"bv1:76.3": "Antarā na nivatteti,",
"bv1:76.4": "catuhatthe caṅkame yathā.",
"bv1:77.1": "Sāriputto mahāpañño,",
"bv1:77.2": "samādhijjhānakovido;",
"bv1:77.3": "Paññāya pāramippatto,",
"bv1:77.4": "pucchati lokanāyakaṃ.",
"bv1:78.1": "“Kīdiso te mahāvīra,",
"bv1:78.2": "abhinīhāro naruttama;",
"bv1:78.3": "Kamhi kāle tayā dhīra,",
"bv1:78.4": "patthitā bodhimuttamā.",
"bv1:79.1": "Dānaṃ sīlañca nekkhammaṃ,",
"bv1:79.2": "paññāvīriyañca kīdisaṃ;",
"bv1:79.3": "Khantisaccamadhiṭṭhānaṃ,",
"bv1:79.4": "mettupekkhā ca kīdisā.",
"bv1:80.1": "Dasa pāramī tayā dhīra,",
"bv1:80.2": "kīdisī lokanāyaka;",
"bv1:80.3": "Kathaṃ upapāramī puṇṇā,",
"bv1:80.4": "paramatthapāramī kathaṃ”.",
"bv1:81.1": "Tassa puṭṭho viyākāsi,",
"bv1:81.2": "karavīkamadhuragiro;",
"bv1:81.3": "Nibbāpayanto hadayaṃ,",
"bv1:81.4": "hāsayanto sadevakaṃ.",
"bv1:82.1": "Atītabuddhānaṃ jinānaṃ desitaṃ,",
"bv1:82.2": "Nikīlitaṃ buddhaparamparāgataṃ;",
"bv1:82.3": "Pubbenivāsānugatāya buddhiyā,",
"bv1:82.4": "Pakāsayī lokahitaṃ sadevake.",
"bv1:83.1": "“Pītipāmojjajananaṃ,",
"bv1:83.2": "sokasallavinodanaṃ;",
"bv1:83.3": "Sabbasampattipaṭilābhaṃ,",
"bv1:83.4": "cittīkatvā suṇātha me.",
"bv1:84.1": "Madanimmadanaṃ sokanudaṃ,",
"bv1:84.2": "Saṃsāraparimocanaṃ;",
"bv1:84.3": "Sabbadukkhakkhayaṃ maggaṃ,",
"bv1:84.4": "Sakkaccaṃ paṭipajjathā”ti.",
"bv1:85.1": "Ratanacaṅkamanakaṇḍo niṭṭhito."
}