{
"bv14:1.1": "Buddhavaṃsa",
"bv14:2.1": "14. Sujātabuddhavaṃsa",
"bv14:3.1": "“Tattheva maṇḍakappamhi,",
"bv14:3.2": "sujāto nāma nāyako;",
"bv14:3.3": "Sīhahanusabhakkhandho,",
"bv14:3.4": "appameyyo durāsado.",
"bv14:4.1": "Candova vimalo suddho,",
"bv14:4.2": "sataraṃsīva patāpavā;",
"bv14:4.3": "Evaṃ sobhati sambuddho,",
"bv14:4.4": "jalanto siriyā sadā.",
"bv14:5.1": "Pāpuṇitvāna sambuddho,",
"bv14:5.2": "kevalaṃ bodhimuttamaṃ;",
"bv14:5.3": "Sumaṅgalamhi nagare,",
"bv14:5.4": "dhammacakkaṃ pavattayi.",
"bv14:6.1": "Desente pavaraṃ dhammaṃ,",
"bv14:6.2": "Sujāte lokanāyake;",
"bv14:6.3": "Asītikoṭī abhisamiṃsu,",
"bv14:6.4": "Paṭhame dhammadesane.",
"bv14:7.1": "Yadā sujāto amitayaso,",
"bv14:7.2": "Deve vassaṃ upāgami;",
"bv14:7.3": "Sattatiṃsasatasahassānaṃ,",
"bv14:7.4": "Dutiyābhisamayo ahu.",
"bv14:8.1": "Yadā sujāto asamasamo,",
"bv14:8.2": "Upagacchi pitusantikaṃ;",
"bv14:8.3": "Saṭṭhisatasahassānaṃ,",
"bv14:8.4": "Tatiyābhisamayo ahu.",
"bv14:9.1": "Sannipātā tayo āsuṃ,",
"bv14:9.2": "sujātassa mahesino;",
"bv14:9.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv14:9.4": "santacittāna tādinaṃ.",
"bv14:10.1": "Abhiññābalappattānaṃ,",
"bv14:10.2": "appattānaṃ bhavābhave;",
"bv14:10.3": "Saṭṭhisatasahassāni,",
"bv14:10.4": "paṭhamaṃ sannipatiṃsu te.",
"bv14:11.1": "Punāparaṃ sannipāte,",
"bv14:11.2": "tidivorohaṇe jine;",
"bv14:11.3": "Paññāsasatasahassānaṃ,",
"bv14:11.4": "dutiyo āsi samāgamo.",
"bv14:12.1": "Upasaṅkamanto narāsabhaṃ,",
"bv14:12.2": "Tassa yo aggasāvako;",
"bv14:12.3": "Catūhi satasahassehi,",
"bv14:12.4": "Sambuddhaṃ upasaṅkami.",
"bv14:13.1": "Ahaṃ tena samayena,",
"bv14:13.2": "catudīpamhi issaro;",
"bv14:13.3": "Antalikkhacaro āsiṃ,",
"bv14:13.4": "cakkavattī mahabbalo.",
"bv14:14.1": "Loke acchariyaṃ disvā,",
"bv14:14.2": "abbhutaṃ lomahaṃsanaṃ;",
"bv14:14.3": "Upagantvāna vandiṃ so,",
"bv14:14.4": "sujātaṃ lokanāyakaṃ.",
"bv14:15.1": "Catudīpe mahārajjaṃ,",
"bv14:15.2": "ratane satta uttame;",
"bv14:15.3": "Buddhe niyyādayitvāna,",
"bv14:15.4": "pabbajiṃ tassa santike.",
"bv14:16.1": "Ārāmikā janapade,",
"bv14:16.2": "uṭṭhānaṃ paṭipiṇḍiya;",
"bv14:16.3": "Upanenti bhikkhusaṃghassa,",
"bv14:16.4": "paccayaṃ sayanāsanaṃ.",
"bv14:17.1": "Sopi maṃ buddho byākāsi,",
"bv14:17.2": "dasasahassimhi issaro;",
"bv14:17.3": "‘Tiṃsakappasahassamhi,",
"bv14:17.4": "ayaṃ buddho bhavissati.",
"bv14:18.1": "Padhānaṃ padahitvāna, … pe …",
"bv14:18.4": "hessāma sammukhā imaṃ’.",
"bv14:19.1": "Tassāpi vacanaṃ sutvā,",
"bv14:19.2": "bhiyyo hāsaṃ janesahaṃ;",
"bv14:19.3": "Adhiṭṭhahiṃ vataṃ uggaṃ,",
"bv14:19.4": "dasapāramipūriyā.",
"bv14:20.1": "Suttantaṃ vinayañcāpi,",
"bv14:20.2": "navaṅgaṃ satthusāsanaṃ;",
"bv14:20.3": "Sabbaṃ pariyāpuṇitvāna,",
"bv14:20.4": "sobhayiṃ jinasāsanaṃ.",
"bv14:21.1": "Tatthappamatto viharanto,",
"bv14:21.2": "brahmaṃ bhāvetva bhāvanaṃ;",
"bv14:21.3": "Abhiññāpāramiṃ gantvā,",
"bv14:21.4": "brahmalokamagañchahaṃ.",
"bv14:22.1": "Sumaṅgalaṃ nāma nagaraṃ,",
"bv14:22.2": "uggato nāma khattiyo;",
"bv14:22.3": "Mātā pabhāvatī nāma,",
"bv14:22.4": "sujātassa mahesino.",
"bv14:23.1": "Navavassasahassāni,",
"bv14:23.2": "agāraṃ ajjha so vasi;",
"bv14:23.3": "Sirī upasirī nando,",
"bv14:23.4": "tayo pāsādamuttamā.",
"bv14:24.1": "Tevīsatisahassāni,",
"bv14:24.2": "nāriyo samalaṅkatā;",
"bv14:24.3": "Sirinandā nāma nārī,",
"bv14:24.4": "upaseno nāma atrajo.",
"bv14:25.1": "Nimitte caturo disvā,",
"bv14:25.2": "assayānena nikkhami;",
"bv14:25.3": "Anūnanavamāsāni,",
"bv14:25.4": "padhānaṃ padahī jino.",
"bv14:26.1": "Brahmunā yācito santo,",
"bv14:26.2": "sujāto lokanāyako;",
"bv14:26.3": "Vatti cakkaṃ mahāvīro,",
"bv14:26.4": "sumaṅgaluyyānamuttame.",
"bv14:27.1": "Sudassano sudevo ca,",
"bv14:27.2": "ahesuṃ aggasāvakā;",
"bv14:27.3": "Nārado nāmupaṭṭhāko,",
"bv14:27.4": "sujātassa mahesino.",
"bv14:28.1": "Nāgā ca nāgasamālā ca,",
"bv14:28.2": "ahesuṃ aggasāvikā;",
"bv14:28.3": "Bodhi tassa bhagavato,",
"bv14:28.4": "mahāveḷūti vuccati.",
"bv14:29.1": "So ca rukkho ghanakkhandho,",
"bv14:29.2": "Acchiddo hoti pattiko;",
"bv14:29.3": "Uju vaṃso brahā hoti,",
"bv14:29.4": "Dassanīyo manoramo.",
"bv14:30.1": "Ekakkhandho pavaḍḍhitvā,",
"bv14:30.2": "tato sākhā pabhijjati;",
"bv14:30.3": "Yathā subaddho morahattho,",
"bv14:30.4": "evaṃ sobhati so dumo.",
"bv14:31.1": "Na tassa kaṇṭakā honti,",
"bv14:31.2": "nāpi chiddaṃ mahā ahu;",
"bv14:31.3": "Vitthiṇṇasākho aviralo,",
"bv14:31.4": "sandacchāyo manoramo.",
"bv14:32.1": "Sudatto ceva citto ca,",
"bv14:32.2": "ahesuṃ aggupaṭṭhakā;",
"bv14:32.3": "Subhaddā ca padumā ca,",
"bv14:32.4": "ahesuṃ aggupaṭṭhikā.",
"bv14:33.1": "Paññāsaratano āsi,",
"bv14:33.2": "uccattanena so jino;",
"bv14:33.3": "Sabbākāravarūpeto,",
"bv14:33.4": "sabbaguṇamupāgato.",
"bv14:34.1": "Tassa pabhā asamasamā,",
"bv14:34.2": "niddhāvati samantato;",
"bv14:34.3": "Appamāṇo atuliyo,",
"bv14:34.4": "opammehi anūpamo.",
"bv14:35.1": "Navutivassasahassāni,",
"bv14:35.2": "āyu vijjati tāvade;",
"bv14:35.3": "Tāvatā tiṭṭhamāno so,",
"bv14:35.4": "tāresi janataṃ bahuṃ.",
"bv14:36.1": "Yathāpi sāgare ūmī,",
"bv14:36.2": "gagane tārakā yathā;",
"bv14:36.3": "Evaṃ tadā pāvacanaṃ,",
"bv14:36.4": "arahantehi cittitaṃ.",
"bv14:37.1": "So ca buddho asamasamo,",
"bv14:37.2": "Guṇāni ca tāni atuliyāni;",
"bv14:37.3": "Sabbaṃ tamantarahitaṃ,",
"bv14:37.4": "Nanu rittā sabbasaṅkhārā.",
"bv14:38.1": "Sujāto jinavaro buddho,",
"bv14:38.2": "Silārāmamhi nibbuto;",
"bv14:38.3": "Tattheva tassa cetiyo,",
"bv14:38.4": "Tīṇigāvutamuggato”ti. #651",
"bv14:39.1": "Sujātassa bhagavato vaṃso dvādasamo."
}