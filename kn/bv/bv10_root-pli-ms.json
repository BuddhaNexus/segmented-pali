{
"bv10:1.1": "Buddhavaṃsa",
"bv10:2.1": "10. Padumabuddhavaṃsa",
"bv10:3.1": "“Anomadassissa aparena,",
"bv10:3.2": "Sambuddho dvipaduttamo;",
"bv10:3.3": "Padumo nāma nāmena,",
"bv10:3.4": "Asamo appaṭipuggalo.",
"bv10:4.1": "Tassāpi asamaṃ sīlaṃ,",
"bv10:4.2": "samādhipi anantako;",
"bv10:4.3": "Asaṅkheyyaṃ ñāṇavaraṃ,",
"bv10:4.4": "vimuttipi anūpamā.",
"bv10:5.1": "Tassāpi atulatejassa,",
"bv10:5.2": "dhammacakkappavattane;",
"bv10:5.3": "Abhisamayā tayo āsuṃ,",
"bv10:5.4": "mahātamapavāhanā.",
"bv10:6.1": "Paṭhamābhisamaye buddho,",
"bv10:6.2": "koṭisatamabodhayi;",
"bv10:6.3": "Dutiyābhisamaye dhīro,",
"bv10:6.4": "navutikoṭimabodhayi.",
"bv10:7.1": "Yadā ca padumo buddho,",
"bv10:7.2": "ovadī sakamatrajaṃ;",
"bv10:7.3": "Tadā asītikoṭīnaṃ,",
"bv10:7.4": "tatiyābhisamayo ahu.",
"bv10:8.1": "Sannipātā tayo āsuṃ,",
"bv10:8.2": "padumassa mahesino;",
"bv10:8.3": "Koṭisatasahassānaṃ,",
"bv10:8.4": "paṭhamo āsi samāgamo.",
"bv10:9.1": "Kathinatthārasamaye,",
"bv10:9.2": "uppanne kathinacīvare;",
"bv10:9.3": "Dhammasenāpatitthāya,",
"bv10:9.4": "bhikkhū sibbiṃsu cīvaraṃ.",
"bv10:10.1": "Tadā te vimalā bhikkhū,",
"bv10:10.2": "chaḷabhiññā mahiddhikā;",
"bv10:10.3": "Tīṇi satasahassāni,",
"bv10:10.4": "samiṃsu aparājitā.",
"bv10:11.1": "Punāparaṃ so narāsabho,",
"bv10:11.2": "pavane vāsaṃ upāgami;",
"bv10:11.3": "Tadā samāgamo āsi,",
"bv10:11.4": "dvinnaṃ satasahassinaṃ.",
"bv10:12.1": "Ahaṃ tena samayena,",
"bv10:12.2": "sīho āsiṃ migādhibhū;",
"bv10:12.3": "Vivekamanubrūhantaṃ,",
"bv10:12.4": "pavane addasaṃ jinaṃ.",
"bv10:13.1": "Vanditvā sirasā pāde,",
"bv10:13.2": "katvāna taṃ padakkhiṇaṃ;",
"bv10:13.3": "Tikkhattuṃ abhināditvā,",
"bv10:13.4": "sattāhaṃ jinamupaṭṭhahaṃ.",
"bv10:14.1": "Sattāhaṃ varasamāpattiyā,",
"bv10:14.2": "Vuṭṭhahitvā tathāgato;",
"bv10:14.3": "Manasā cintayitvāna,",
"bv10:14.4": "Koṭibhikkhū samānayi.",
"bv10:15.1": "Tadāpi so mahāvīro,",
"bv10:15.2": "tesaṃ majjhe viyākari;",
"bv10:15.3": "‘Aparimeyyito kappe,",
"bv10:15.4": "ayaṃ buddho bhavissati.",
"bv10:16.1": "Padhānaṃ padahitvāna, … pe …",
"bv10:16.4": "hessāma sammukhā imaṃ’.",
"bv10:17.1": "Tassāpi vacanaṃ sutvā,",
"bv10:17.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv10:17.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv10:17.4": "dasapāramipūriyā.",
"bv10:18.1": "Campakaṃ nāma nagaraṃ,",
"bv10:18.2": "asamo nāma khattiyo;",
"bv10:18.3": "Asamā nāma janikā,",
"bv10:18.4": "padumassa mahesino.",
"bv10:19.1": "Dasavassasahassāni,",
"bv10:19.2": "agāraṃ ajjha so vasi;",
"bv10:19.3": "Nandā-vasu-yasuttarā,",
"bv10:19.4": "tayo pāsādamuttamā.",
"bv10:20.1": "Tettiṃsa ca sahassāni,",
"bv10:20.2": "nāriyo samalaṅkatā;",
"bv10:20.3": "Uttarā nāma sā nārī,",
"bv10:20.4": "rammo nāmāsi atrajo.",
"bv10:21.1": "Nimitte caturo disvā,",
"bv10:21.2": "rathayānena nikkhami;",
"bv10:21.3": "Anūnaaṭṭhamāsāni,",
"bv10:21.4": "padhānaṃ padahī jino.",
"bv10:22.1": "Brahmunā yācito santo,",
"bv10:22.2": "padumo lokanāyako;",
"bv10:22.3": "Vatti cakkaṃ mahāvīro,",
"bv10:22.4": "dhanañcuyyānamuttame.",
"bv10:23.1": "Sālo ca upasālo ca,",
"bv10:23.2": "ahesuṃ aggasāvakā;",
"bv10:23.3": "Varuṇo nāmupaṭṭhāko,",
"bv10:23.4": "padumassa mahesino.",
"bv10:24.1": "Rādhā ceva surādhā ca,",
"bv10:24.2": "ahesuṃ aggasāvikā;",
"bv10:24.3": "Bodhi tassa bhagavato,",
"bv10:24.4": "mahāsoṇoti vuccati.",
"bv10:25.1": "Bhiyyo ceva asamo ca,",
"bv10:25.2": "ahesuṃ aggupaṭṭhakā;",
"bv10:25.3": "Rucī ca nandarāmā ca,",
"bv10:25.4": "ahesuṃ aggupaṭṭhikā.",
"bv10:26.1": "Aṭṭhapaṇṇāsaratanaṃ,",
"bv10:26.2": "accuggato mahāmuni;",
"bv10:26.3": "Pabhā niddhāvatī tassa,",
"bv10:26.4": "asamā sabbaso disā.",
"bv10:27.1": "Candappabhā sūriyappabhā,",
"bv10:27.2": "ratanaggimaṇippabhā;",
"bv10:27.3": "Sabbāpi tā hatā honti,",
"bv10:27.4": "patvā jinapabhuttamaṃ.",
"bv10:28.1": "Vassasatasahassāni,",
"bv10:28.2": "āyu vijjati tāvade;",
"bv10:28.3": "Tāvatā tiṭṭhamāno so,",
"bv10:28.4": "tāresi janataṃ bahuṃ.",
"bv10:29.1": "Paripakkamānase satte,",
"bv10:29.2": "bodhayitvā asesato;",
"bv10:29.3": "Sesake anusāsitvā,",
"bv10:29.4": "nibbuto so sasāvako.",
"bv10:30.1": "Uragova tacaṃ jiṇṇaṃ,",
"bv10:30.2": "vaddhapattaṃva pādapo;",
"bv10:30.3": "Jahitvā sabbasaṅkhāre,",
"bv10:30.4": "nibbuto so yathā sikhī.",
"bv10:31.1": "Padumo jinavaro satthā,",
"bv10:31.2": "Dhammārāmamhi nibbuto;",
"bv10:31.3": "Dhātuvitthārikaṃ āsi,",
"bv10:31.4": "Tesu tesu padesato”ti. #520",
"bv10:32.1": "Padumassa bhagavato vaṃso aṭṭhamo."
}