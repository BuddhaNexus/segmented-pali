{
"bv20:1.1": "Buddhavaṃsa",
"bv20:2.1": "20. Phussabuddhavaṃsa",
"bv20:3.1": "“Tattheva maṇḍakappamhi,",
"bv20:3.2": "ahu satthā anuttaro;",
"bv20:3.3": "Anūpamo asamasamo,",
"bv20:3.4": "phusso lokagganāyako.",
"bv20:4.1": "Sopi sabbaṃ tamaṃ hantvā,",
"bv20:4.2": "vijaṭetvā mahājaṭaṃ;",
"bv20:4.3": "Sadevakaṃ tappayanto,",
"bv20:4.4": "abhivassi amatambunā.",
"bv20:5.1": "Dhammacakkaṃ pavattente,",
"bv20:5.2": "phusse nakkhattamaṅgale;",
"bv20:5.3": "Koṭisatasahassānaṃ,",
"bv20:5.4": "paṭhamābhisamayo ahu.",
"bv20:6.1": "Navutisatasahassānaṃ,",
"bv20:6.2": "dutiyābhisamayo ahu;",
"bv20:6.3": "Asītisatasahassānaṃ,",
"bv20:6.4": "tatiyābhisamayo ahu.",
"bv20:7.1": "Sannipātā tayo āsuṃ,",
"bv20:7.2": "phussassāpi mahesino;",
"bv20:7.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv20:7.4": "santacittāna tādinaṃ.",
"bv20:8.1": "Saṭṭhisatasahassānaṃ,",
"bv20:8.2": "paṭhamo āsi samāgamo;",
"bv20:8.3": "Paññāsasatasahassānaṃ,",
"bv20:8.4": "dutiyo āsi samāgamo.",
"bv20:9.1": "Cattārīsasatasahassānaṃ,",
"bv20:9.2": "Tatiyo āsi samāgamo;",
"bv20:9.3": "Anupādā vimuttānaṃ,",
"bv20:9.4": "Vocchinnapaṭisandhinaṃ.",
"bv20:10.1": "Ahaṃ tena samayena,",
"bv20:10.2": "vijitāvī nāma khattiyo;",
"bv20:10.3": "Chaḍḍayitvā mahārajjaṃ,",
"bv20:10.4": "pabbajiṃ tassa santike.",
"bv20:11.1": "Sopi maṃ buddho byākāsi,",
"bv20:11.2": "phusso lokagganāyako;",
"bv20:11.3": "‘Dvenavute ito kappe,",
"bv20:11.4": "ayaṃ buddho bhavissati.",
"bv20:12.1": "Padhānaṃ padahitvāna, … pe …",
"bv20:12.4": "hessāma sammukhā imaṃ’.",
"bv20:13.1": "Tassāpi vacanaṃ sutvā,",
"bv20:13.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv20:13.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv20:13.4": "dasapāramipūriyā.",
"bv20:14.1": "Suttantaṃ vinayañcāpi,",
"bv20:14.2": "navaṅgaṃ satthusāsanaṃ;",
"bv20:14.3": "Sabbaṃ pariyāpuṇitvā,",
"bv20:14.4": "sobhayiṃ jinasāsanaṃ.",
"bv20:15.1": "Tatthappamatto viharanto,",
"bv20:15.2": "brahmaṃ bhāvetva bhāvanaṃ;",
"bv20:15.3": "Abhiññāsu pāramiṃ gantvā,",
"bv20:15.4": "brahmalokamagañchahaṃ.",
"bv20:16.1": "Kāsikaṃ nāma nagaraṃ,",
"bv20:16.2": "jayaseno nāma khattiyo;",
"bv20:16.3": "Sirimā nāma janikā,",
"bv20:16.4": "phussassāpi mahesino.",
"bv20:17.1": "Navavassasahassāni,",
"bv20:17.2": "Agāraṃ ajjha so vasi;",
"bv20:17.3": "Garuḷapakkha haṃsa suvaṇṇabhārā,",
"bv20:17.4": "Tayo pāsādamuttamā.",
"bv20:18.1": "Tiṃsaitthisahassāni,",
"bv20:18.2": "nāriyo samalaṅkatā;",
"bv20:18.3": "Kisāgotamī nāma nārī,",
"bv20:18.4": "anūpamo nāma atrajo.",
"bv20:19.1": "Nimitte caturo disvā,",
"bv20:19.2": "hatthiyānena nikkhami;",
"bv20:19.3": "Chamāsaṃ padhānacāraṃ,",
"bv20:19.4": "acarī purisuttamo.",
"bv20:20.1": "Brahmunā yācito santo,",
"bv20:20.2": "phusso lokagganāyako;",
"bv20:20.3": "Vatti cakkaṃ mahāvīro,",
"bv20:20.4": "migadāye naruttamo.",
"bv20:21.1": "Surakkhito dhammaseno,",
"bv20:21.2": "ahesuṃ aggasāvakā;",
"bv20:21.3": "Sabhiyo nāmupaṭṭhāko,",
"bv20:21.4": "phussassāpi mahesino.",
"bv20:22.1": "Cālā ca upacālā ca,",
"bv20:22.2": "ahesuṃ aggasāvikā;",
"bv20:22.3": "Bodhi tassa bhagavato,",
"bv20:22.4": "āmaṇḍoti pavuccati.",
"bv20:23.1": "Dhanañcayo visākho ca,",
"bv20:23.2": "ahesuṃ aggupaṭṭhakā;",
"bv20:23.3": "Padumā ceva nāgā ca,",
"bv20:23.4": "ahesuṃ aggupaṭṭhikā.",
"bv20:24.1": "Aṭṭhapaṇṇāsaratanaṃ,",
"bv20:24.2": "sopi accuggato muni;",
"bv20:24.3": "Sobhate sataraṃsīva,",
"bv20:24.4": "uḷurājāva pūrito.",
"bv20:25.1": "Navutivassasahassāni,",
"bv20:25.2": "āyu vijjati tāvade;",
"bv20:25.3": "Tāvatā tiṭṭhamāno so,",
"bv20:25.4": "tāresi janataṃ bahuṃ.",
"bv20:26.1": "Ovaditvā bahū satte,",
"bv20:26.2": "santāretvā bahū jane;",
"bv20:26.3": "Sopi satthā atulayaso,",
"bv20:26.4": "nibbuto so sasāvako.",
"bv20:27.1": "Phusso jinavaro satthā,",
"bv20:27.2": "Senārāmamhi nibbuto;",
"bv20:27.3": "Dhātuvitthārikaṃ āsi,",
"bv20:27.4": "Tesu tesu padesato”ti. #806",
"bv20:28.1": "Phussassa bhagavato vaṃso aṭṭhārasamo."
}