{
"bv9:1.1": "Buddhavaṃsa",
"bv9:2.1": "9 Anomadassībuddhavaṃsa",
"bv9:3.1": "“Sobhitassa aparena,",
"bv9:3.2": "Sambuddho dvipaduttamo;",
"bv9:3.3": "Anomadassī amitayaso,",
"bv9:3.4": "Tejassī duratikkamo.",
"bv9:4.1": "So chetvā bandhanaṃ sabbaṃ,",
"bv9:4.2": "viddhaṃsetvā tayo bhave;",
"bv9:4.3": "Anivattigamanaṃ maggaṃ,",
"bv9:4.4": "desesi devamānuse.",
"bv9:5.1": "Sāgarova asaṅkhobbho,",
"bv9:5.2": "pabbatova durāsado;",
"bv9:5.3": "Ākāsova ananto so,",
"bv9:5.4": "sālarājāva phullito.",
"bv9:6.1": "Dassanenapi taṃ buddhaṃ,",
"bv9:6.2": "tositā honti pāṇino;",
"bv9:6.3": "Byāharantaṃ giraṃ sutvā,",
"bv9:6.4": "amataṃ pāpuṇanti te.",
"bv9:7.1": "Dhammābhisamayo tassa,",
"bv9:7.2": "Iddho phīto tadā ahu;",
"bv9:7.3": "Koṭisatāni abhisamiṃsu,",
"bv9:7.4": "Paṭhame dhammadesane.",
"bv9:8.1": "Tato paraṃ abhisamaye,",
"bv9:8.2": "Vassante dhammavuṭṭhiyo;",
"bv9:8.3": "Asītikoṭiyobhisamiṃsu,",
"bv9:8.4": "Dutiye dhammadesane.",
"bv9:9.1": "Tatoparañhi vassante,",
"bv9:9.2": "tappayante ca pāṇinaṃ;",
"bv9:9.3": "Aṭṭhasattatikoṭīnaṃ,",
"bv9:9.4": "tatiyābhisamayo ahu.",
"bv9:10.1": "Sannipātā tayo āsuṃ,",
"bv9:10.2": "tassāpi ca mahesino;",
"bv9:10.3": "Abhiññābalappattānaṃ,",
"bv9:10.4": "pupphitānaṃ vimuttiyā.",
"bv9:11.1": "Aṭṭhasatasahassānaṃ,",
"bv9:11.2": "sannipāto tadā ahu;",
"bv9:11.3": "Pahīnamadamohānaṃ,",
"bv9:11.4": "santacittāna tādinaṃ.",
"bv9:12.1": "Sattasatasahassānaṃ,",
"bv9:12.2": "dutiyo āsi samāgamo;",
"bv9:12.3": "Anaṅgaṇānaṃ virajānaṃ,",
"bv9:12.4": "upasantāna tādinaṃ.",
"bv9:13.1": "Channaṃ satasahassānaṃ,",
"bv9:13.2": "tatiyo āsi samāgamo;",
"bv9:13.3": "Abhiññābalappattānaṃ,",
"bv9:13.4": "nibbutānaṃ tapassinaṃ.",
"bv9:14.1": "Ahaṃ tena samayena,",
"bv9:14.2": "yakkho āsiṃ mahiddhiko;",
"bv9:14.3": "Nekānaṃ yakkhakoṭīnaṃ,",
"bv9:14.4": "vasavattimhi issaro.",
"bv9:15.1": "Tadāpi taṃ buddhavaraṃ,",
"bv9:15.2": "upagantvā mahesinaṃ;",
"bv9:15.3": "Annapānena tappesiṃ,",
"bv9:15.4": "sasaṃghaṃ lokanāyakaṃ.",
"bv9:16.1": "Sopi maṃ tadā byākāsi,",
"bv9:16.2": "visuddhanayano muni;",
"bv9:16.3": "‘Aparimeyyito kappe,",
"bv9:16.4": "ayaṃ buddho bhavissati.",
"bv9:17.1": "Padhānaṃ padahitvāna, … pe …",
"bv9:17.4": "hessāma sammukhā imaṃ’.",
"bv9:18.1": "Tassāpi vacanaṃ sutvā,",
"bv9:18.2": "haṭṭho saṃviggamānaso;",
"bv9:18.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv9:18.4": "dasapāramipūriyā.",
"bv9:19.1": "Nagaraṃ candavatī nāma,",
"bv9:19.2": "yasavā nāma khattiyo;",
"bv9:19.3": "Mātā yasodharā nāma,",
"bv9:19.4": "anomadassissa satthuno.",
"bv9:20.1": "Dasavassasahassāni,",
"bv9:20.2": "agāraṃ ajjha so vasi;",
"bv9:20.3": "Sirī upasirī vaḍḍho,",
"bv9:20.4": "tayo pāsādamuttamā.",
"bv9:21.1": "Tevīsatisahassāni,",
"bv9:21.2": "nāriyo samalaṅkatā;",
"bv9:21.3": "Sirimā nāma sā nārī,",
"bv9:21.4": "upavāṇo nāma atrajo.",
"bv9:22.1": "Nimitte caturo disvā,",
"bv9:22.2": "sivikāyābhinikkhami;",
"bv9:22.3": "Anūnadasamāsāni,",
"bv9:22.4": "padhānaṃ padahī jino.",
"bv9:23.1": "Brahmunā yācito santo,",
"bv9:23.2": "anomadassī mahāmuni;",
"bv9:23.3": "Vatti cakkaṃ mahāvīro,",
"bv9:23.4": "uyyāne so sudassane.",
"bv9:24.1": "Nisabho ca anomo ca,",
"bv9:24.2": "ahesuṃ aggasāvakā;",
"bv9:24.3": "Varuṇo nāmupaṭṭhāko,",
"bv9:24.4": "anomadassissa satthuno.",
"bv9:25.1": "Sundarī ca sumanā ca,",
"bv9:25.2": "ahesuṃ aggasāvikā;",
"bv9:25.3": "Bodhi tassa bhagavato,",
"bv9:25.4": "ajjunoti pavuccati.",
"bv9:26.1": "Nandivaḍḍho sirivaḍḍho,",
"bv9:26.2": "ahesuṃ aggupaṭṭhakā;",
"bv9:26.3": "Uppalā ceva padumā ca,",
"bv9:26.4": "ahesuṃ aggupaṭṭhikā.",
"bv9:27.1": "Aṭṭhapaṇṇāsaratanaṃ,",
"bv9:27.2": "accuggato mahāmuni;",
"bv9:27.3": "Pabhā niddhāvatī tassa,",
"bv9:27.4": "sataraṃsīva uggato.",
"bv9:28.1": "Vassasatasahassāni,",
"bv9:28.2": "āyu vijjati tāvade;",
"bv9:28.3": "Tāvatā tiṭṭhamāno so,",
"bv9:28.4": "tāresi janataṃ bahuṃ.",
"bv9:29.1": "Supupphitaṃ pāvacanaṃ,",
"bv9:29.2": "arahantehi tādihi;",
"bv9:29.3": "Vītarāgehi vimalehi,",
"bv9:29.4": "sobhittha jinasāsanaṃ.",
"bv9:30.1": "So ca satthā amitayaso,",
"bv9:30.2": "Yugāni tāni atuliyāni;",
"bv9:30.3": "Sabbaṃ tamantarahitaṃ,",
"bv9:30.4": "Nanu rittā sabbasaṅkhārā.",
"bv9:31.1": "Anomadassī jino satthā,",
"bv9:31.2": "Dhammārāmamhi nibbuto;",
"bv9:31.3": "Tatthevassa jinathūpo,",
"bv9:31.4": "Ubbedho pañcavīsatī”ti. #491",
"bv9:32.1": "Anomadassissa bhagavato vaṃso sattamo."
}