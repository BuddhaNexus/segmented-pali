{
"pv20:1.1": "Petavatthu",
"pv20:2.1": "Ubbarivagga",
"pv20:3.1": "8. Cūḷaseṭṭhipetavatthu",
"pv20:4.1": "“Naggo kiso pabbajitosi bhante,",
"pv20:4.2": "Rattiṃ kuhiṃ gacchasi kissa hetu;",
"pv20:4.3": "Ācikkha me taṃ api sakkuṇemu,",
"pv20:4.4": "Sabbena vittaṃ paṭipādaye tuvan”ti.",
"pv20:5.1": "“Bārāṇasī nagaraṃ dūraghuṭṭhaṃ,",
"pv20:5.2": "Tatthāhaṃ gahapati aḍḍhako ahu dīno;",
"pv20:5.3": "Adātā gedhitamano āmisasmiṃ,",
"pv20:5.4": "Dussīlyena yamavisayamhi patto.",
"pv20:6.1": "So sūcikāya kilamito tehi,",
"pv20:6.2": "Teneva ñātīsu yāmi āmisakiñcikkhahetu;",
"pv20:6.3": "Adānasīlā na ca saddahanti,",
"pv20:6.4": "Dānaphalaṃ hoti paramhi loke.",
"pv20:7.1": "Dhītā ca mayhaṃ lapate abhikkhaṇaṃ,",
"pv20:7.2": "‘Dassāmi dānaṃ pitūnaṃ pitāmahānaṃ’;",
"pv20:7.3": "Tamupakkhaṭaṃ parivisayanti brāhmaṇā,",
"pv20:7.4": "‘Yāmi ahaṃ andhakavindaṃ bhottun’”ti.",
"pv20:8.1": "Tamavoca rājā “anubhaviyāna tampi,",
"pv20:8.2": "Eyyāsi khippaṃ ahamapi kassaṃ pūjaṃ;",
"pv20:8.3": "Ācikkha me taṃ yadi atthi hetu,",
"pv20:8.4": "Saddhāyitaṃ hetuvaco suṇomā”ti.",
"pv20:9.1": "“Tathā”ti vatvā agamāsi tattha,",
"pv20:9.2": "Bhuñjiṃsu bhattaṃ na ca dakkhiṇārahā;",
"pv20:9.3": "Paccāgami rājagahaṃ punāparaṃ,",
"pv20:9.4": "Pāturahosi purato janādhipassa.",
"pv20:10.1": "Disvāna petaṃ punadeva āgataṃ,",
"pv20:10.2": "Rājā avoca “ahamapi kiṃ dadāmi;",
"pv20:10.3": "Ācikkha me taṃ yadi atthi hetu,",
"pv20:10.4": "Yena tuvaṃ cirataraṃ pīṇito siyā”ti.",
"pv20:11.1": "“Buddhañca saṃghaṃ parivisiyāna rāja,",
"pv20:11.2": "Annena pānena ca cīvarena;",
"pv20:11.3": "Taṃ dakkhiṇaṃ ādisa me hitāya,",
"pv20:11.4": "Evaṃ ahaṃ cirataraṃ pīṇito siyā”ti.",
"pv20:12.1": "Tato ca rājā nipatitvā tāvade,",
"pv20:12.2": "Dānaṃ sahatthā atulaṃ daditvā saṃghe;",
"pv20:12.3": "Ārocesi pakataṃ tathāgatassa,",
"pv20:12.4": "Tassa ca petassa dakkhiṇaṃ ādisittha.",
"pv20:13.1": "So pūjito ativiya sobhamāno,",
"pv20:13.2": "Pāturahosi purato janādhipassa;",
"pv20:13.3": "“Yakkhohamasmi paramiddhipatto,",
"pv20:13.4": "Na mayhamatthi samā sadisā mānusā.",
"pv20:14.1": "Passānubhāvaṃ aparimitaṃ mamayidaṃ,",
"pv20:14.2": "Tayānudiṭṭhaṃ atulaṃ datvā saṃghe;",
"pv20:14.3": "Santappito satataṃ sadā bahūhi,",
"pv20:14.4": "Yāmi ahaṃ sukhito manussadevā”ti.",
"pv20:15.1": "Cūḷaseṭṭhipetavatthu aṭṭhamaṃ.",
"pv20:15.2": "Bhāṇavāraṃ paṭhamaṃ."
}