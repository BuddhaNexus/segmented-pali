{
"pv27:1.1": "Petavatthu",
"pv27:2.1": "Cūḷavagga",
"pv27:3.1": "2. Sāṇavāsītherapetavatthu",
"pv27:4.1": "Kuṇḍināgariyo thero,",
"pv27:4.2": "sāṇavāsinivāsiko;",
"pv27:4.3": "Poṭṭhapādoti nāmena,",
"pv27:4.4": "samaṇo bhāvitindriyo.",
"pv27:5.1": "Tassa mātā pitā bhātā,",
"pv27:5.2": "duggatā yamalokikā;",
"pv27:5.3": "Pāpakammaṃ karitvāna,",
"pv27:5.4": "petalokaṃ ito gatā.",
"pv27:6.1": "Te duggatā sūcikaṭṭā,",
"pv27:6.2": "kilantā naggino kisā;",
"pv27:6.3": "Uttasantā mahattāsā,",
"pv27:6.4": "na dassenti kurūrino.",
"pv27:7.1": "Tassa bhātā vitaritvā,",
"pv27:7.2": "naggo ekapathekako;",
"pv27:7.3": "Catukuṇḍiko bhavitvāna,",
"pv27:7.4": "therassa dassayītumaṃ.",
"pv27:8.1": "Thero cāmanasikatvā,",
"pv27:8.2": "tuṇhībhūto atikkami;",
"pv27:8.3": "So ca viññāpayī theraṃ,",
"pv27:8.4": "“bhātā petagato ahaṃ.",
"pv27:9.1": "Mātā pitā ca te bhante,",
"pv27:9.2": "duggatā yamalokikā;",
"pv27:9.3": "Pāpakammaṃ karitvāna,",
"pv27:9.4": "petalokaṃ ito gatā.",
"pv27:10.1": "Te duggatā sūcikaṭṭā,",
"pv27:10.2": "kilantā naggino kisā;",
"pv27:10.3": "Uttasantā mahattāsā,",
"pv27:10.4": "na dassenti kurūrino.",
"pv27:11.1": "Anukampassu kāruṇiko,",
"pv27:11.2": "datvā anvādisāhi no;",
"pv27:11.3": "Tava dinnena dānena,",
"pv27:11.4": "yāpessanti kurūrino”ti.",
"pv27:12.1": "Thero caritvā piṇḍāya,",
"pv27:12.2": "bhikkhū aññe ca dvādasa;",
"pv27:12.3": "Ekajjhaṃ sannipatiṃsu,",
"pv27:12.4": "bhattavissaggakāraṇā.",
"pv27:13.1": "Thero sabbeva te āha,",
"pv27:13.2": "“yathāladdhaṃ dadātha me;",
"pv27:13.3": "Saṃghabhattaṃ karissāmi,",
"pv27:13.4": "anukampāya ñātinaṃ”.",
"pv27:14.1": "Niyyādayiṃsu therassa,",
"pv27:14.2": "thero saṃghaṃ nimantayi;",
"pv27:14.3": "Datvā anvādisi thero,",
"pv27:14.4": "mātu pitu ca bhātuno;",
"pv27:14.5": "“Idaṃ me ñātīnaṃ hotu,",
"pv27:14.6": "sukhitā hontu ñātayo”.",
"pv27:15.1": "Samanantarānuddiṭṭhe,",
"pv27:15.2": "bhojanaṃ udapajjatha;",
"pv27:15.3": "Suciṃ paṇītaṃ sampannaṃ,",
"pv27:15.4": "anekarasabyañjanaṃ.",
"pv27:16.1": "Tato uddassayī bhātā,",
"pv27:16.2": "vaṇṇavā balavā sukhī;",
"pv27:16.3": "“Pahūtaṃ bhojanaṃ bhante,",
"pv27:16.4": "passa naggāmhase mayaṃ;",
"pv27:16.5": "Tathā bhante parakkama,",
"pv27:16.6": "yathā vatthaṃ labhāmase”ti.",
"pv27:17.1": "Thero saṅkārakūṭamhā,",
"pv27:17.2": "uccinitvāna nantake;",
"pv27:17.3": "Pilotikaṃ paṭaṃ katvā,",
"pv27:17.4": "saṃghe cātuddise adā.",
"pv27:18.1": "Datvā anvādisī thero,",
"pv27:18.2": "mātu pitu ca bhātuno;",
"pv27:18.3": "“Idaṃ me ñātīnaṃ hotu,",
"pv27:18.4": "sukhitā hontu ñātayo”.",
"pv27:19.1": "Samanantarānuddiṭṭhe,",
"pv27:19.2": "vatthāni udapajjisuṃ;",
"pv27:19.3": "Tato suvatthavasano,",
"pv27:19.4": "therassa dassayītumaṃ.",
"pv27:20.1": "“Yāvatā nandarājassa,",
"pv27:20.2": "vijitasmiṃ paṭicchadā;",
"pv27:20.3": "Tato bahutarā bhante,",
"pv27:20.4": "vatthānacchādanāni no.",
"pv27:21.1": "Koseyyakambalīyāni,",
"pv27:21.2": "khoma kappāsikāni ca;",
"pv27:21.3": "Vipulā ca mahagghā ca,",
"pv27:21.4": "tepākāsevalambare.",
"pv27:22.1": "Te mayaṃ paridahāma,",
"pv27:22.2": "yaṃ yaṃ hi manaso piyaṃ;",
"pv27:22.3": "Tathā bhante parakkama,",
"pv27:22.4": "yathā gehaṃ labhāmase”ti.",
"pv27:23.1": "Thero paṇṇakuṭiṃ katvā,",
"pv27:23.2": "saṃghe cātuddise adā;",
"pv27:23.3": "Datvā anvādisī thero,",
"pv27:23.4": "mātu pitu ca bhātuno;",
"pv27:23.5": "“Idaṃ me ñātīnaṃ hotu,",
"pv27:23.6": "sukhitā hontu ñātayo”.",
"pv27:24.1": "Samanantarānuddiṭṭhe,",
"pv27:24.2": "gharāni udapajjisuṃ;",
"pv27:24.3": "Kūṭāgāranivesanā,",
"pv27:24.4": "vibhattā bhāgaso mitā.",
"pv27:25.1": "“Na manussesu īdisā,",
"pv27:25.2": "yādisā no gharā idha;",
"pv27:25.3": "Api dibbesu yādisā,",
"pv27:25.4": "tādisā no gharā idha.",
"pv27:26.1": "Daddallamānā ābhenti,",
"pv27:26.2": "Samantā caturo disā;",
"pv27:26.3": "Tathā bhante parakkama,",
"pv27:26.4": "Yathā pānīyaṃ labhāmase”ti.",
"pv27:27.1": "Thero karaṇaṃ pūretvā,",
"pv27:27.2": "saṃghe cātuddise adā;",
"pv27:27.3": "Datvā anvādisī thero,",
"pv27:27.4": "mātu pitu ca bhātuno;",
"pv27:27.5": "“Idaṃ me ñātīnaṃ hotu,",
"pv27:27.6": "sukhitā hontu ñātayo”.",
"pv27:28.1": "Samanantarānuddiṭṭhe,",
"pv27:28.2": "pānīyaṃ udapajjatha;",
"pv27:28.3": "Gambhīrā caturassā ca,",
"pv27:28.4": "pokkharañño sunimmitā.",
"pv27:29.1": "Sītodikā suppatitthā,",
"pv27:29.2": "sītā appaṭigandhiyā;",
"pv27:29.3": "Padumuppalasañchannā,",
"pv27:29.4": "vārikiñjakkhapūritā.",
"pv27:30.1": "Tattha nhatvā pivitvā ca,",
"pv27:30.2": "therassa paṭidassayuṃ;",
"pv27:30.3": "“Pahūtaṃ pānīyaṃ bhante,",
"pv27:30.4": "pādā dukkhā phalanti no”.",
"pv27:31.1": "“Āhiṇḍamānā khañjāma,",
"pv27:31.2": "sakkhare kusakaṇṭake;",
"pv27:31.3": "‘Tathā bhante parakkama,",
"pv27:31.4": "yathā yānaṃ labhāmase’”ti.",
"pv27:32.1": "Thero sipāṭikaṃ laddhā,",
"pv27:32.2": "saṃghe cātuddise adā;",
"pv27:32.3": "Datvā anvādisī thero,",
"pv27:32.4": "mātu pitu ca bhātuno;",
"pv27:32.5": "“Idaṃ me ñātīnaṃ hotu,",
"pv27:32.6": "sukhitā hontu ñātayo”.",
"pv27:33.1": "Samanantarānuddiṭṭhe,",
"pv27:33.2": "petā rathena māgamuṃ;",
"pv27:33.3": "“Anukampitamha bhadante,",
"pv27:33.4": "bhattenacchādanena ca.",
"pv27:34.1": "Gharena pānīyadānena,",
"pv27:34.2": "yānadānena cūbhayaṃ;",
"pv27:34.3": "Muniṃ kāruṇikaṃ loke,",
"pv27:34.4": "bhante vanditumāgatā”ti.",
"pv27:35.1": "Sāṇavāsītherapetavatthu dutiyaṃ."
}