{
"pv8:1.1": "Petavatthu",
"pv8:2.1": "Uragavagga",
"pv8:3.1": "8. Goṇapetavatthu",
"pv8:4.1": "“Kiṃ nu ummattarūpova,",
"pv8:4.2": "lāyitvā haritaṃ tiṇaṃ;",
"pv8:4.3": "Khāda khādāti lapasi,",
"pv8:4.4": "gatasattaṃ jaraggavaṃ.",
"pv8:5.1": "Na hi annena pānena,",
"pv8:5.2": "mato goṇo samuṭṭhahe;",
"pv8:5.3": "Tvaṃsi bālo ca dummedho,",
"pv8:5.4": "yathā taññova dummatī”ti.",
"pv8:6.1": "“Ime pādā idaṃ sīsaṃ,",
"pv8:6.2": "ayaṃ kāyo savāladhi;",
"pv8:6.3": "Nettā tatheva tiṭṭhanti,",
"pv8:6.4": "ayaṃ goṇo samuṭṭhahe.",
"pv8:7.1": "Nāyyakassa hatthapādā,",
"pv8:7.2": "kāyo sīsañca dissati;",
"pv8:7.3": "Rudaṃ mattikathūpasmiṃ,",
"pv8:7.4": "nanu tvaññeva dummatī”ti.",
"pv8:8.1": "“Ādittaṃ vata maṃ santaṃ,",
"pv8:8.2": "ghatasittaṃva pāvakaṃ;",
"pv8:8.3": "Vārinā viya osiñcaṃ,",
"pv8:8.4": "sabbaṃ nibbāpaye daraṃ.",
"pv8:9.1": "Abbahī vata me sallaṃ,",
"pv8:9.2": "sokaṃ hadayanissitaṃ;",
"pv8:9.3": "Yo me sokaparetassa,",
"pv8:9.4": "pitusokaṃ apānudi.",
"pv8:10.1": "Svāhaṃ abbūḷhasallosmi,",
"pv8:10.2": "sītibhūtosmi nibbuto;",
"pv8:10.3": "Na socāmi na rodāmi,",
"pv8:10.4": "tava sutvāna māṇava”.",
"pv8:11.1": "Evaṃ karonti sappaññā,",
"pv8:11.2": "ye honti anukampakā;",
"pv8:11.3": "Vinivattayanti sokamhā,",
"pv8:11.4": "sujāto pitaraṃ yathāti.",
"pv8:12.1": "Goṇapetavatthu aṭṭhamaṃ."
}