{
"pv14:1.1": "Petavatthu",
"pv14:2.1": "Ubbarivagga",
"pv14:3.1": "2. Sāriputtattheramātupetivatthu",
"pv14:4.1": "“Naggā dubbaṇṇarūpāsi,",
"pv14:4.2": "kisā dhamanisanthatā;",
"pv14:4.3": "Upphāsulike kisike,",
"pv14:4.4": "kā nu tvaṃ idha tiṭṭhasi”.",
"pv14:5.1": "“Ahaṃ te sakiyā mātā,",
"pv14:5.2": "pubbe aññāsu jātīsu;",
"pv14:5.3": "Upapannā pettivisayaṃ,",
"pv14:5.4": "khuppipāsasamappitā.",
"pv14:6.1": "Chaḍḍitaṃ khipitaṃ kheḷaṃ,",
"pv14:6.2": "siṅghāṇikaṃ silesumaṃ;",
"pv14:6.3": "Vasañca ḍayhamānānaṃ,",
"pv14:6.4": "vijātānañca lohitaṃ.",
"pv14:7.1": "Vaṇikānañca yaṃ ghāna-",
"pv14:7.2": "sīsacchinnāna lohitaṃ;",
"pv14:7.3": "Khudāparetā bhuñjāmi,",
"pv14:7.4": "itthipurisanissitaṃ.",
"pv14:8.1": "Pubbalohitaṃ bhakkhāmi,",
"pv14:8.2": "pasūnaṃ mānusāna ca;",
"pv14:8.3": "Aleṇā anagārā ca,",
"pv14:8.4": "nīlamañcaparāyaṇā.",
"pv14:9.1": "Dehi puttaka me dānaṃ,",
"pv14:9.2": "datvā anvādisāhi me;",
"pv14:9.3": "Appeva nāma mucceyyaṃ,",
"pv14:9.4": "pubbalohitabhojanā”ti.",
"pv14:10.1": "Mātuyā vacanaṃ sutvā,",
"pv14:10.2": "upatissonukampako;",
"pv14:10.3": "Āmantayi moggallānaṃ,",
"pv14:10.4": "anuruddhañca kappinaṃ.",
"pv14:11.1": "Catasso kuṭiyo katvā,",
"pv14:11.2": "saṃghe cātuddise adā;",
"pv14:11.3": "Kuṭiyo annapānañca,",
"pv14:11.4": "mātu dakkhiṇamādisī.",
"pv14:12.1": "Samanantarānuddiṭṭhe,",
"pv14:12.2": "vipāko udapajjatha;",
"pv14:12.3": "Bhojanaṃ pānīyaṃ vatthaṃ,",
"pv14:12.4": "dakkhiṇāya idaṃ phalaṃ.",
"pv14:13.1": "Tato suddhā sucivasanā,",
"pv14:13.2": "kāsikuttamadhārinī;",
"pv14:13.3": "Vicittavatthābharaṇā,",
"pv14:13.4": "kolitaṃ upasaṅkami.",
"pv14:14.1": "“Abhikkantena vaṇṇena,",
"pv14:14.2": "yā tvaṃ tiṭṭhasi devate;",
"pv14:14.3": "Obhāsentī disā sabbā,",
"pv14:14.4": "osadhī viya tārakā.",
"pv14:15.1": "Kena tetādiso vaṇṇo,",
"pv14:15.2": "kena te idha mijjhati;",
"pv14:15.3": "Uppajjanti ca te bhogā,",
"pv14:15.4": "ye keci manaso piyā.",
"pv14:16.1": "Pucchāmi taṃ devi mahānubhāve,",
"pv14:16.2": "Manussabhūtā kimakāsi puññaṃ;",
"pv14:16.3": "Kenāsi evaṃ jalitānubhāvā,",
"pv14:16.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"pv14:17.1": "“Sāriputtassāhaṃ mātā,",
"pv14:17.2": "pubbe aññāsu jātīsu;",
"pv14:17.3": "Upapannā pettivisayaṃ,",
"pv14:17.4": "khuppipāsasamappitā.",
"pv14:18.1": "Chaḍḍitaṃ khipitaṃ kheḷaṃ,",
"pv14:18.2": "siṅghāṇikaṃ silesumaṃ;",
"pv14:18.3": "Vasañca ḍayhamānānaṃ,",
"pv14:18.4": "vijātānañca lohitaṃ.",
"pv14:19.1": "Vaṇikānañca yaṃ ghāna-",
"pv14:19.2": "sīsacchinnāna lohitaṃ;",
"pv14:19.3": "Khudāparetā bhuñjāmi,",
"pv14:19.4": "itthipurisanissitaṃ.",
"pv14:20.1": "Pubbalohitaṃ bhakkhissaṃ,",
"pv14:20.2": "pasūnaṃ mānusāna ca;",
"pv14:20.3": "Aleṇā anagārā ca,",
"pv14:20.4": "nīlamañcaparāyaṇā.",
"pv14:21.1": "Sāriputtassa dānena,",
"pv14:21.2": "modāmi akutobhayā;",
"pv14:21.3": "Muniṃ kāruṇikaṃ loke,",
"pv14:21.4": "bhante vanditumāgatā”ti.",
"pv14:22.1": "Sāriputtattherassa mātupetivatthu dutiyaṃ."
}