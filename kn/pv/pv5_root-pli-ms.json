{
"pv5:1.1": "Petavatthu",
"pv5:2.1": "Uragavagga",
"pv5:3.1": "5. Tirokuṭṭapetavatthu",
"pv5:4.1": "“Tirokuṭṭesu tiṭṭhanti,",
"pv5:4.2": "sandhisiṅghāṭakesu ca;",
"pv5:4.3": "Dvārabāhāsu tiṭṭhanti,",
"pv5:4.4": "āgantvāna sakaṃ gharaṃ.",
"pv5:5.1": "Pahūte annapānamhi,",
"pv5:5.2": "khajjabhojje upaṭṭhite;",
"pv5:5.3": "Na tesaṃ koci sarati,",
"pv5:5.4": "sattānaṃ kammapaccayā.",
"pv5:6.1": "Evaṃ dadanti ñātīnaṃ,",
"pv5:6.2": "ye honti anukampakā;",
"pv5:6.3": "Suciṃ paṇītaṃ kālena,",
"pv5:6.4": "kappiyaṃ pānabhojanaṃ;",
"pv5:6.5": "‘Idaṃ vo ñātīnaṃ hotu,",
"pv5:6.6": "sukhitā hontu ñātayo’.",
"pv5:7.1": "Te ca tattha samāgantvā,",
"pv5:7.2": "ñātipetā samāgatā;",
"pv5:7.3": "Pahūte annapānamhi,",
"pv5:7.4": "sakkaccaṃ anumodare.",
"pv5:8.1": "‘Ciraṃ jīvantu no ñātī,",
"pv5:8.2": "yesaṃ hetu labhāmase;",
"pv5:8.3": "Amhākañca katā pūjā,",
"pv5:8.4": "dāyakā ca anipphalā’.",
"pv5:9.1": "Na hi tattha kasī atthi,",
"pv5:9.2": "gorakkhettha na vijjati;",
"pv5:9.3": "Vaṇijjā tādisī natthi,",
"pv5:9.4": "hiraññena kayākayaṃ;",
"pv5:9.5": "Ito dinnena yāpenti,",
"pv5:9.6": "petā kālagatā tahiṃ.",
"pv5:10.1": "Unname udakaṃ vuṭṭhaṃ,",
"pv5:10.2": "yathā ninnaṃ pavattati;",
"pv5:10.3": "Evamevaṃ ito dinnaṃ,",
"pv5:10.4": "petānaṃ upakappati.",
"pv5:11.1": "Yathā vārivahā pūrā,",
"pv5:11.2": "paripūrenti sāgaraṃ;",
"pv5:11.3": "Evamevaṃ ito dinnaṃ,",
"pv5:11.4": "petānaṃ upakappati.",
"pv5:12.1": "‘Adāsi me akāsi me,",
"pv5:12.2": "ñāti mittā sakhā ca me’;",
"pv5:12.3": "Petānaṃ dakkhiṇaṃ dajjā,",
"pv5:12.4": "pubbe katamanussaraṃ.",
"pv5:13.1": "Na hi ruṇṇaṃ vā soko vā,",
"pv5:13.2": "yā caññā paridevanā;",
"pv5:13.3": "Na taṃ petānamatthāya,",
"pv5:13.4": "evaṃ tiṭṭhanti ñātayo.",
"pv5:14.1": "Ayañca kho dakkhiṇā dinnā,",
"pv5:14.2": "saṃghamhi suppatiṭṭhitā;",
"pv5:14.3": "Dīgharattaṃ hitāyassa,",
"pv5:14.4": "ṭhānaso upakappati.",
"pv5:15.1": "So ñātidhammo ca ayaṃ nidassito,",
"pv5:15.2": "Petāna pūjā ca katā uḷārā;",
"pv5:15.3": "Balañca bhikkhūnamanuppadinnaṃ,",
"pv5:15.4": "Tumhehi puññaṃ pasutaṃ anappakan”ti.",
"pv5:16.1": "Tirokuṭṭapetavatthu pañcamaṃ."
}