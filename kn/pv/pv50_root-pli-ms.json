{
"pv50:1.1": "Petavatthu",
"pv50:2.1": "Mahāvagga",
"pv50:3.1": "15. Seṭṭhiputtapetavatthu",
"pv50:4.1": "“Saṭṭhivassasahassāni,",
"pv50:4.2": "paripuṇṇāni sabbaso;",
"pv50:4.3": "Niraye paccamānānaṃ,",
"pv50:4.4": "kadā anto bhavissati.",
"pv50:5.1": "Natthi anto kuto anto,",
"pv50:5.2": "na anto paṭidissati;",
"pv50:5.3": "Tathā hi pakataṃ pāpaṃ,",
"pv50:5.4": "tuyhaṃ mayhañca mārisā.",
"pv50:6.1": "Dujjīvitamajīvamha,",
"pv50:6.2": "ye sante na dadamhase;",
"pv50:6.3": "Santesu deyyadhammesu,",
"pv50:6.4": "dīpaṃ nākamha attano.",
"pv50:7.1": "Sohaṃ nūna ito gantvā,",
"pv50:7.2": "yoniṃ laddhāna mānusiṃ;",
"pv50:7.3": "Vadaññū sīlasampanno,",
"pv50:7.4": "kāhāmi kusalaṃ bahun”ti.",
"pv50:8.1": "Seṭṭhiputtapetavatthu pannarasamaṃ."
}