{
"pv40:1.1": "Petavatthu",
"pv40:2.1": "Mahāvagga",
"pv40:3.1": "5. Ucchupetavatthu",
"pv40:4.1": "“Idaṃ mama ucchuvanaṃ mahantaṃ,",
"pv40:4.2": "Nibbattati puññaphalaṃ anappakaṃ;",
"pv40:4.3": "Taṃ dāni me na paribhogameti,",
"pv40:4.4": "Ācikkha bhante kissa ayaṃ vipāko.",
"pv40:5.1": "Haññāmi khajjāmi ca vāyamāmi,",
"pv40:5.2": "Parisakkāmi paribhuñjituṃ kiñci;",
"pv40:5.3": "Svāhaṃ chinnathāmo kapaṇo lālapāmi,",
"pv40:5.4": "Kissa kammassa ayaṃ vipāko.",
"pv40:6.1": "Vighāto cāhaṃ paripatāmi chamāyaṃ,",
"pv40:6.2": "Parivattāmi vāricarova ghamme;",
"pv40:6.3": "Rudato ca me assukā niggalanti,",
"pv40:6.4": "Ācikkha bhante kissa ayaṃ vipāko.",
"pv40:7.1": "Chāto kilanto ca pipāsito ca,",
"pv40:7.2": "Santassito sātasukhaṃ na vinde;",
"pv40:7.3": "Pucchāmi taṃ etamatthaṃ bhadante,",
"pv40:7.4": "Kathaṃ nu ucchuparibhogaṃ labheyyan”ti.",
"pv40:8.1": "“Pure tuvaṃ kammamakāsi attanā,",
"pv40:8.2": "Manussabhūto purimāya jātiyā;",
"pv40:8.3": "Ahañca taṃ etamatthaṃ vadāmi,",
"pv40:8.4": "Sutvāna tvaṃ etamatthaṃ vijāna.",
"pv40:9.1": "Ucchuṃ tuvaṃ khādamāno payāto,",
"pv40:9.2": "Puriso ca te piṭṭhito anvagacchi;",
"pv40:9.3": "So ca taṃ paccāsanto kathesi,",
"pv40:9.4": "Tassa tuvaṃ na kiñci ālapittha.",
"pv40:10.1": "So ca taṃ abhaṇantaṃ ayāci,",
"pv40:10.2": "‘Dehayya ucchun’ti ca taṃ avoca;",
"pv40:10.3": "Tassa tuvaṃ piṭṭhito ucchuṃ adāsi,",
"pv40:10.4": "Tassetaṃ kammassa ayaṃ vipāko.",
"pv40:11.1": "Iṅgha tvaṃ gantvāna piṭṭhito gaṇheyyāsi,",
"pv40:11.2": "Gahetvāna taṃ khādassu yāvadatthaṃ;",
"pv40:11.3": "Teneva tvaṃ attamano bhavissasi,",
"pv40:11.4": "Haṭṭho cudaggo ca pamodito cā”ti.",
"pv40:12.1": "Gantvāna so piṭṭhito aggahesi,",
"pv40:12.2": "Gahetvāna taṃ khādi yāvadatthaṃ;",
"pv40:12.3": "Teneva so attamano ahosi,",
"pv40:12.4": "Haṭṭho cudaggo ca pamodito cāti.",
"pv40:13.1": "Ucchupetavatthu pañcamaṃ."
}