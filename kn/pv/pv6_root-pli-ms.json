{
"pv6:1.1": "Petavatthu",
"pv6:2.1": "Uragavagga",
"pv6:3.1": "6. Pañcaputtakhādapetivatthu",
"pv6:4.1": "“Naggā dubbaṇṇarūpāsi,",
"pv6:4.2": "duggandhā pūti vāyasi;",
"pv6:4.3": "Makkhikāhi parikiṇṇā,",
"pv6:4.4": "kā nu tvaṃ idha tiṭṭhasī”ti.",
"pv6:5.1": "“Ahaṃ bhadante petīmhi,",
"pv6:5.2": "duggatā yamalokikā;",
"pv6:5.3": "Pāpakammaṃ karitvāna,",
"pv6:5.4": "petalokaṃ ito gatā.",
"pv6:6.1": "Kālena pañca puttāni,",
"pv6:6.2": "sāyaṃ pañca punāpare;",
"pv6:6.3": "Vijāyitvāna khādāmi,",
"pv6:6.4": "tepi nā honti me alaṃ.",
"pv6:7.1": "Pariḍayhati dhūmāyati,",
"pv6:7.2": "khudāya hadayaṃ mama;",
"pv6:7.3": "Pānīyaṃ na labhe pātuṃ,",
"pv6:7.4": "passa maṃ byasanaṃ gatan”ti.",
"pv6:8.1": "“Kiṃ nu kāyena vācāya,",
"pv6:8.2": "manasā dukkaṭaṃ kataṃ;",
"pv6:8.3": "Kissa kammavipākena,",
"pv6:8.4": "puttamaṃsāni khādasī”ti.",
"pv6:9.1": "“Sapatī me gabbhinī āsi,",
"pv6:9.2": "tassā pāpaṃ acetayiṃ;",
"pv6:9.3": "Sāhaṃ paduṭṭhamanasā,",
"pv6:9.4": "akariṃ gabbhapātanaṃ.",
"pv6:10.1": "Tassā dvemāsiko gabbho,",
"pv6:10.2": "lohitaññeva pagghari;",
"pv6:10.3": "Tadassā mātā kupitā,",
"pv6:10.4": "mayhaṃ ñātī samānayi;",
"pv6:10.5": "Sapathañca maṃ kāresi,",
"pv6:10.6": "paribhāsāpayī ca maṃ.",
"pv6:11.1": "Sāhaṃ ghorañca sapathaṃ,",
"pv6:11.2": "musāvādaṃ abhāsisaṃ;",
"pv6:11.3": "Puttamaṃsāni khādāmi,",
"pv6:11.4": "sace taṃ pakataṃ mayā.",
"pv6:12.1": "Tassa kammassa vipākena,",
"pv6:12.2": "musāvādassa cūbhayaṃ;",
"pv6:12.3": "Puttamaṃsāni khādāmi,",
"pv6:12.4": "pubbalohitamakkhitā”ti.",
"pv6:13.1": "Pañcaputtakhādapetivatthu chaṭṭhaṃ."
}