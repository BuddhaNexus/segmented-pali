{
"pv21:1.1": "Petavatthu",
"pv21:2.1": "Ubbarivagga",
"pv21:3.1": "9. Aṅkurapetavatthu",
"pv21:4.1": "“Yassa atthāya gacchāma,",
"pv21:4.2": "kambojaṃ dhanahārakā;",
"pv21:4.3": "Ayaṃ kāmadado yakkho,",
"pv21:4.4": "imaṃ yakkhaṃ nayāmase.",
"pv21:5.1": "Imaṃ yakkhaṃ gahetvāna,",
"pv21:5.2": "Sādhukena pasayha vā;",
"pv21:5.3": "Yānaṃ āropayitvāna,",
"pv21:5.4": "Khippaṃ gacchāma dvārakan”ti.",
"pv21:6.1": "“Yassa rukkhassa chāyāya,",
"pv21:6.2": "nisīdeyya sayeyya vā;",
"pv21:6.3": "Na tassa sākhaṃ bhañjeyya,",
"pv21:6.4": "mittadubbho hi pāpako”ti.",
"pv21:7.1": "“Yassa rukkhassa chāyāya,",
"pv21:7.2": "nisīdeyya sayeyya vā;",
"pv21:7.3": "Khandhampi tassa chindeyya,",
"pv21:7.4": "attho ce tādiso siyā”ti.",
"pv21:8.1": "“Yassa rukkhassa chāyāya,",
"pv21:8.2": "nisīdeyya sayeyya vā;",
"pv21:8.3": "Na tassa pattaṃ bhindeyya,",
"pv21:8.4": "mittadubbho hi pāpako”ti.",
"pv21:9.1": "“Yassa rukkhassa chāyāya,",
"pv21:9.2": "nisīdeyya sayeyya vā;",
"pv21:9.3": "Samūlampi taṃ abbuhe,",
"pv21:9.4": "attho ce tādiso siyā”ti.",
"pv21:10.1": "“Yassekarattimpi ghare vaseyya,",
"pv21:10.2": "Yatthannapānaṃ puriso labhetha;",
"pv21:10.3": "Na tassa pāpaṃ manasāpi cintaye,",
"pv21:10.4": "Kataññutā sappurisehi vaṇṇitā.",
"pv21:11.1": "Yassekarattimpi ghare vaseyya,",
"pv21:11.2": "Annena pānena upaṭṭhito siyā;",
"pv21:11.3": "Na tassa pāpaṃ manasāpi cintaye,",
"pv21:11.4": "Adubbhapāṇī dahate mittadubbhiṃ.",
"pv21:12.1": "Yo pubbe katakalyāṇo,",
"pv21:12.2": "pacchā pāpena hiṃsati;",
"pv21:12.3": "Allapāṇihato poso,",
"pv21:12.4": "na so bhadrāni passatī”ti.",
"pv21:13.1": "“Nāhaṃ devena vā manussena vā,",
"pv21:13.2": "Issariyena vāhaṃ suppasayho;",
"pv21:13.3": "Yakkhohamasmi paramiddhipatto,",
"pv21:13.4": "Dūraṅgamo vaṇṇabalūpapanno”ti.",
"pv21:14.1": "“Pāṇi te sabbaso vaṇṇo,",
"pv21:14.2": "pañcadhāro madhussavo;",
"pv21:14.3": "Nānārasā paggharanti,",
"pv21:14.4": "maññehaṃ taṃ purindadan”ti.",
"pv21:15.1": "“Nāmhi devo na gandhabbo,",
"pv21:15.2": "nāpi sakko purindado;",
"pv21:15.3": "Petaṃ maṃ aṅkura jānāhi,",
"pv21:15.4": "roruvamhā idhāgatan”ti.",
"pv21:16.1": "“Kiṃsīlo kiṃsamācāro,",
"pv21:16.2": "roruvasmiṃ pure tuvaṃ;",
"pv21:16.3": "Kena te brahmacariyena,",
"pv21:16.4": "puññaṃ pāṇimhi ijjhatī”ti.",
"pv21:17.1": "“Tunnavāyo pure āsiṃ,",
"pv21:17.2": "roruvasmiṃ tadā ahaṃ;",
"pv21:17.3": "Sukicchavutti kapaṇo,",
"pv21:17.4": "na me vijjati dātave.",
"pv21:18.1": "Nivesanañca me āsi,",
"pv21:18.2": "asayhassa upantike;",
"pv21:18.3": "Saddhassa dānapatino,",
"pv21:18.4": "katapuññassa lajjino.",
"pv21:19.1": "Tattha yācanakāyanti,",
"pv21:19.2": "nānāgottā vanibbakā;",
"pv21:19.3": "Te ca maṃ tattha pucchanti,",
"pv21:19.4": "asayhassa nivesanaṃ.",
"pv21:20.1": "Kattha gacchāma bhaddaṃ vo,",
"pv21:20.2": "kattha dānaṃ padīyati;",
"pv21:20.3": "Tesāhaṃ puṭṭho akkhāmi,",
"pv21:20.4": "asayhassa nivesanaṃ.",
"pv21:21.1": "Paggayha dakkhiṇaṃ bāhuṃ,",
"pv21:21.2": "ettha gacchatha bhaddaṃ vo;",
"pv21:21.3": "Ettha dānaṃ padīyati,",
"pv21:21.4": "asayhassa nivesane.",
"pv21:22.1": "Tena pāṇi kāmadado,",
"pv21:22.2": "tena pāṇi madhussavo;",
"pv21:22.3": "Tena me brahmacariyena,",
"pv21:22.4": "puññaṃ pāṇimhi ijjhatī”ti.",
"pv21:23.1": "“Na kira tvaṃ adā dānaṃ,",
"pv21:23.2": "Sakapāṇīhi kassaci;",
"pv21:23.3": "Parassa dānaṃ anumodamāno,",
"pv21:23.4": "Pāṇiṃ paggayha pāvadi.",
"pv21:24.1": "Tena pāṇi kāmadado,",
"pv21:24.2": "tena pāṇi madhussavo;",
"pv21:24.3": "Tena te brahmacariyena,",
"pv21:24.4": "puññaṃ pāṇimhi ijjhati.",
"pv21:25.1": "Yo so dānamadā bhante,",
"pv21:25.2": "pasanno sakapāṇibhi;",
"pv21:25.3": "So hitvā mānusaṃ dehaṃ,",
"pv21:25.4": "kiṃ nu so disataṃ gato”ti.",
"pv21:26.1": "“Nāhaṃ pajānāmi asayhasāhino,",
"pv21:26.2": "Aṅgīrasassa gatiṃ āgatiṃ vā;",
"pv21:26.3": "Sutañca me vessavaṇassa santike,",
"pv21:26.4": "Sakkassa sahabyataṃ gato asayho”ti.",
"pv21:27.1": "“Alameva kātuṃ kalyāṇaṃ,",
"pv21:27.2": "dānaṃ dātuṃ yathārahaṃ;",
"pv21:27.3": "Pāṇiṃ kāmadadaṃ disvā,",
"pv21:27.4": "ko puññaṃ na karissati.",
"pv21:28.1": "So hi nūna ito gantvā,",
"pv21:28.2": "anuppatvāna dvārakaṃ;",
"pv21:28.3": "Dānaṃ paṭṭhapayissāmi,",
"pv21:28.4": "yaṃ mamassa sukhāvahaṃ.",
"pv21:29.1": "Dassāmannañca pānañca,",
"pv21:29.2": "vatthasenāsanāni ca;",
"pv21:29.3": "Papañca udapānañca,",
"pv21:29.4": "dugge saṅkamanāni cā”ti.",
"pv21:30.1": "“Kena te aṅgulī kuṇā,",
"pv21:30.2": "mukhañca kuṇalīkataṃ;",
"pv21:30.3": "Akkhīni ca paggharanti,",
"pv21:30.4": "kiṃ pāpaṃ pakataṃ tayā”ti.",
"pv21:31.1": "“Aṅgīrasassa gahapatino,",
"pv21:31.2": "Saddhassa gharamesino;",
"pv21:31.3": "Tassāhaṃ dānavissagge,",
"pv21:31.4": "Dāne adhikato ahuṃ.",
"pv21:32.1": "Tattha yācanake disvā,",
"pv21:32.2": "āgate bhojanatthike;",
"pv21:32.3": "Ekamantaṃ apakkamma,",
"pv21:32.4": "akāsiṃ kuṇaliṃ mukhaṃ.",
"pv21:33.1": "Tena me aṅgulī kuṇā,",
"pv21:33.2": "mukhañca kuṇalīkataṃ;",
"pv21:33.3": "Akkhīni me paggharanti,",
"pv21:33.4": "taṃ pāpaṃ pakataṃ mayā”ti.",
"pv21:34.1": "“Dhammena te kāpurisa,",
"pv21:34.2": "mukhañca kuṇalīkataṃ;",
"pv21:34.3": "Akkhīni ca paggharanti,",
"pv21:34.4": "yaṃ taṃ parassa dānassa;",
"pv21:34.5": "Akāsi kuṇaliṃ mukhaṃ.",
"pv21:35.1": "Kathaṃ hi dānaṃ dadamāno,",
"pv21:35.2": "kareyya parapattiyaṃ;",
"pv21:35.3": "Annaṃ pānaṃ khādanīyaṃ,",
"pv21:35.4": "vatthasenāsanāni ca.",
"pv21:36.1": "So hi nūna ito gantvā,",
"pv21:36.2": "anuppatvāna dvārakaṃ;",
"pv21:36.3": "Dānaṃ paṭṭhapayissāmi,",
"pv21:36.4": "yaṃ mamassa sukhāvahaṃ.",
"pv21:37.1": "Dassāmannañca pānañca,",
"pv21:37.2": "vatthasenāsanāni ca;",
"pv21:37.3": "Papañca udapānañca,",
"pv21:37.4": "dugge saṅkamanāni cā”ti.",
"pv21:38.1": "Tato hi so nivattitvā,",
"pv21:38.2": "anuppatvāna dvārakaṃ;",
"pv21:38.3": "Dānaṃ paṭṭhapayi aṅkuro,",
"pv21:38.4": "yaṃtumassa sukhāvahaṃ.",
"pv21:39.1": "Adā annañca pānañca,",
"pv21:39.2": "vatthasenāsanāni ca;",
"pv21:39.3": "Papañca udapānañca,",
"pv21:39.4": "vippasannena cetasā.",
"pv21:40.1": "Ko chāto ko ca tasito,",
"pv21:40.2": "ko vatthaṃ paridahissati;",
"pv21:40.3": "Kassa santāni yoggāni,",
"pv21:40.4": "ito yojentu vāhanaṃ.",
"pv21:41.1": "Ko chatticchati gandhañca,",
"pv21:41.2": "ko mālaṃ ko upāhanaṃ;",
"pv21:41.3": "Itissu tattha ghosenti,",
"pv21:41.4": "kappakā sūdamāgadhā;",
"pv21:41.5": "Sadā sāyañca pāto ca,",
"pv21:41.6": "aṅkurassa nivesane.",
"pv21:42.1": "“‘Sukhaṃ supati aṅkuro’,",
"pv21:42.2": "iti jānāti maṃ jano;",
"pv21:42.3": "Dukkhaṃ supāmi sindhaka,",
"pv21:42.4": "yaṃ na passāmi yācake.",
"pv21:43.1": "‘Sukhaṃ supati aṅkuro’,",
"pv21:43.2": "iti jānāti maṃ jano;",
"pv21:43.3": "Dukkhaṃ sindhaka supāmi,",
"pv21:43.4": "appake su vanibbake”ti.",
"pv21:44.1": "“Sakko ce te varaṃ dajjā,",
"pv21:44.2": "tāvatiṃsānamissaro;",
"pv21:44.3": "Kissa sabbassa lokassa,",
"pv21:44.4": "varamāno varaṃ vare”ti.",
"pv21:45.1": "“Sakko ce me varaṃ dajjā,",
"pv21:45.2": "tāvatiṃsānamissaro;",
"pv21:45.3": "Kāluṭṭhitassa me sato,",
"pv21:45.4": "sūriyuggamanaṃ pati;",
"pv21:45.5": "Dibbā bhakkhā pātubhaveyyuṃ,",
"pv21:45.6": "sīlavanto ca yācakā.",
"pv21:46.1": "Dadato me na khīyetha,",
"pv21:46.2": "datvā nānutapeyyahaṃ;",
"pv21:46.3": "Dadaṃ cittaṃ pasādeyyaṃ,",
"pv21:46.4": "etaṃ sakkaṃ varaṃ vare”ti.",
"pv21:47.1": "“Na sabbavittāni pare pavecche,",
"pv21:47.2": "Dadeyya dānañca dhanañca rakkhe;",
"pv21:47.3": "Tasmā hi dānā dhanameva seyyo,",
"pv21:47.4": "Atippadānena kulā na honti.",
"pv21:48.1": "Adānamatidānañca,",
"pv21:48.2": "Nappasaṃsanti paṇḍitā;",
"pv21:48.3": "Tasmā hi dānā dhanameva seyyo,",
"pv21:48.4": "Samena vatteyya sa dhīradhammo”ti.",
"pv21:49.1": "“Aho vata re ahameva dajjaṃ,",
"pv21:49.2": "Santo ca maṃ sappurisā bhajeyyuṃ;",
"pv21:49.3": "Meghova ninnāni paripūrayanto,",
"pv21:49.4": "Santappaye sabbavanibbakānaṃ.",
"pv21:50.1": "Yassa yācanake disvā,",
"pv21:50.2": "mukhavaṇṇo pasīdati;",
"pv21:50.3": "Datvā attamano hoti,",
"pv21:50.4": "taṃ gharaṃ vasato sukhaṃ.",
"pv21:51.1": "Yassa yācanake disvā,",
"pv21:51.2": "mukhavaṇṇo pasīdati;",
"pv21:51.3": "Datvā attamano hoti,",
"pv21:51.4": "esā yaññassa sampadā.",
"pv21:52.1": "Pubbeva dānā sumano,",
"pv21:52.2": "dadaṃ cittaṃ pasādaye;",
"pv21:52.3": "Datvā attamano hoti,",
"pv21:52.4": "esā yaññassa sampadā”ti.",
"pv21:53.1": "Saṭṭhi vāhasahassāni,",
"pv21:53.2": "aṅkurassa nivesane;",
"pv21:53.3": "Bhojanaṃ dīyate niccaṃ,",
"pv21:53.4": "puññapekkhassa jantuno.",
"pv21:54.1": "Tisahassāni sūdāni hi,",
"pv21:54.2": "āmuttamaṇikuṇḍalā;",
"pv21:54.3": "Aṅkuraṃ upajīvanti,",
"pv21:54.4": "dāne yaññassa vāvaṭā.",
"pv21:55.1": "Saṭṭhi purisasahassāni,",
"pv21:55.2": "āmuttamaṇikuṇḍalā;",
"pv21:55.3": "Aṅkurassa mahādāne,",
"pv21:55.4": "kaṭṭhaṃ phālenti māṇavā.",
"pv21:56.1": "Soḷasitthisahassāni,",
"pv21:56.2": "sabbālaṅkārabhūsitā;",
"pv21:56.3": "Aṅkurassa mahādāne,",
"pv21:56.4": "vidhā piṇḍenti nāriyo.",
"pv21:57.1": "Soḷasitthisahassāni,",
"pv21:57.2": "sabbālaṅkārabhūsitā;",
"pv21:57.3": "Aṅkurassa mahādāne,",
"pv21:57.4": "dabbigāhā upaṭṭhitā.",
"pv21:58.1": "Bahuṃ bahūnaṃ pādāsi,",
"pv21:58.2": "ciraṃ pādāsi khattiyo;",
"pv21:58.3": "Sakkaccañca sahatthā ca,",
"pv21:58.4": "cittīkatvā punappunaṃ.",
"pv21:59.1": "Bahū māse ca pakkhe ca,",
"pv21:59.2": "utusaṃvaccharāni ca;",
"pv21:59.3": "Mahādānaṃ pavattesi,",
"pv21:59.4": "aṅkuro dīghamantaraṃ.",
"pv21:60.1": "Evaṃ datvā yajitvā ca,",
"pv21:60.2": "aṅkuro dīghamantaraṃ;",
"pv21:60.3": "So hitvā mānusaṃ dehaṃ,",
"pv21:60.4": "tāvatiṃsūpago ahu.",
"pv21:61.1": "Kaṭacchubhikkhaṃ datvāna,",
"pv21:61.2": "anuruddhassa indako;",
"pv21:61.3": "So hitvā mānusaṃ dehaṃ,",
"pv21:61.4": "tāvatiṃsūpago ahu.",
"pv21:62.1": "Dasahi ṭhānehi aṅkuraṃ,",
"pv21:62.2": "indako atirocati;",
"pv21:62.3": "Rūpe sadde rase gandhe,",
"pv21:62.4": "phoṭṭhabbe ca manorame.",
"pv21:63.1": "Āyunā yasasā ceva,",
"pv21:63.2": "vaṇṇena ca sukhena ca;",
"pv21:63.3": "Ādhipaccena aṅkuraṃ,",
"pv21:63.4": "indako atirocati.",
"pv21:64.1": "()",
"pv21:65.1": "Tāvatiṃse yadā buddho,",
"pv21:65.2": "silāyaṃ paṇḍukambale;",
"pv21:65.3": "Pāricchattakamūlamhi,",
"pv21:65.4": "vihāsi purisuttamo.",
"pv21:66.1": "Dasasu lokadhātūsu,",
"pv21:66.2": "sannipatitvāna devatā;",
"pv21:66.3": "Payirupāsanti sambuddhaṃ,",
"pv21:66.4": "vasantaṃ nagamuddhani.",
"pv21:67.1": "Na koci devo vaṇṇena,",
"pv21:67.2": "sambuddhaṃ atirocati;",
"pv21:67.3": "Sabbe deve atikkamma,",
"pv21:67.4": "sambuddhova virocati.",
"pv21:68.1": "Yojanāni dasa dve ca,",
"pv21:68.2": "aṅkuroyaṃ tadā ahu;",
"pv21:68.3": "Avidūreva buddhassa,",
"pv21:68.4": "indako atirocati.",
"pv21:69.1": "Oloketvāna sambuddho,",
"pv21:69.2": "Aṅkurañcāpi indakaṃ;",
"pv21:69.3": "Dakkhiṇeyyaṃ sambhāvento,",
"pv21:69.4": "Idaṃ vacanamabravi.",
"pv21:70.1": "“Mahādānaṃ tayā dinnaṃ,",
"pv21:70.2": "aṅkura dīghamantaraṃ;",
"pv21:70.3": "Atidūre nisinnosi,",
"pv21:70.4": "āgaccha mama santike”ti.",
"pv21:71.1": "Codito bhāvitattena,",
"pv21:71.2": "aṅkuro idamabravi;",
"pv21:71.3": "“Kiṃ mayhaṃ tena dānena,",
"pv21:71.4": "dakkhiṇeyyena suññataṃ.",
"pv21:72.1": "Ayaṃ so indako yakkho,",
"pv21:72.2": "dajjā dānaṃ parittakaṃ;",
"pv21:72.3": "Atirocati amhehi,",
"pv21:72.4": "cando tāragaṇe yathā”ti.",
"pv21:73.1": "“Ujjaṅgale yathā khette,",
"pv21:73.2": "bījaṃ bahumpi ropitaṃ;",
"pv21:73.3": "Na vipulaphalaṃ hoti,",
"pv21:73.4": "napi toseti kassakaṃ.",
"pv21:74.1": "Tatheva dānaṃ bahukaṃ,",
"pv21:74.2": "dussīlesu patiṭṭhitaṃ;",
"pv21:74.3": "Na vipulaphalaṃ hoti,",
"pv21:74.4": "napi toseti dāyakaṃ.",
"pv21:75.1": "Yathāpi bhaddake khette,",
"pv21:75.2": "bījaṃ appampi ropitaṃ;",
"pv21:75.3": "Sammā dhāraṃ pavecchante,",
"pv21:75.4": "phalaṃ toseti kassakaṃ.",
"pv21:76.1": "Tatheva sīlavantesu,",
"pv21:76.2": "guṇavantesu tādisu;",
"pv21:76.3": "Appakampi kataṃ kāraṃ,",
"pv21:76.4": "puññaṃ hoti mahapphalan”ti.",
"pv21:77.1": "Viceyya dānaṃ dātabbaṃ,",
"pv21:77.2": "yattha dinnaṃ mahapphalaṃ;",
"pv21:77.3": "Viceyya dānaṃ datvāna,",
"pv21:77.4": "saggaṃ gacchanti dāyakā.",
"pv21:78.1": "Viceyya dānaṃ sugatappasatthaṃ,",
"pv21:78.2": "Ye dakkhiṇeyyā idha jīvaloke;",
"pv21:78.3": "Etesu dinnāni mahapphalāni,",
"pv21:78.4": "Bījāni vuttāni yathā sukhetteti.",
"pv21:79.1": "Aṅkurapetavatthu navamaṃ."
}