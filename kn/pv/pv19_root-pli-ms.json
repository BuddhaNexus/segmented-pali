{
"pv19:1.1": "Petavatthu",
"pv19:2.1": "Ubbarivagga",
"pv19:3.1": "7. Dhanapālaseṭṭhipetavatthu",
"pv19:4.1": "“Naggo dubbaṇṇarūposi,",
"pv19:4.2": "kiso dhamanisanthato;",
"pv19:4.3": "Upphāsuliko kisiko,",
"pv19:4.4": "ko nu tvamasi mārisa”.",
"pv19:5.1": "“Ahaṃ bhadante petomhi,",
"pv19:5.2": "duggato yamalokiko;",
"pv19:5.3": "Pāpakammaṃ karitvāna,",
"pv19:5.4": "petalokaṃ ito gato”.",
"pv19:6.1": "“Kiṃ nu kāyena vācāya,",
"pv19:6.2": "manasā dukkaṭaṃ kataṃ;",
"pv19:6.3": "Kissa kammavipākena,",
"pv19:6.4": "petalokaṃ ito gato”.",
"pv19:7.1": "“Nagaraṃ atthi paṇṇānaṃ,",
"pv19:7.2": "erakacchanti vissutaṃ;",
"pv19:7.3": "Tattha seṭṭhi pure āsiṃ,",
"pv19:7.4": "dhanapāloti maṃ vidū.",
"pv19:8.1": "Asīti sakaṭavāhānaṃ,",
"pv19:8.2": "hiraññassa ahosi me;",
"pv19:8.3": "Pahūtaṃ me jātarūpaṃ,",
"pv19:8.4": "muttā veḷuriyā bahū.",
"pv19:9.1": "Tāva mahaddhanassāpi,",
"pv19:9.2": "na me dātuṃ piyaṃ ahu;",
"pv19:9.3": "Pidahitvā dvāraṃ bhuñjiṃ,",
"pv19:9.4": "mā maṃ yācanakāddasuṃ.",
"pv19:10.1": "Assaddho maccharī cāsiṃ,",
"pv19:10.2": "kadariyo paribhāsako;",
"pv19:10.3": "Dadantānaṃ karontānaṃ,",
"pv19:10.4": "vārayissaṃ bahū jane.",
"pv19:11.1": "Vipāko natthi dānassa,",
"pv19:11.2": "saṃyamassa kuto phalaṃ;",
"pv19:11.3": "Pokkharaññodapānāni,",
"pv19:11.4": "ārāmāni ca ropite;",
"pv19:11.5": "Papāyo ca vināsesiṃ,",
"pv19:11.6": "dugge saṅkamanāni ca.",
"pv19:12.1": "Svāhaṃ akatakalyāṇo,",
"pv19:12.2": "katapāpo tato cuto;",
"pv19:12.3": "Upapanno pettivisayaṃ,",
"pv19:12.4": "khuppipāsasamappito.",
"pv19:13.1": "Pañcapaṇṇāsavassāni,",
"pv19:13.2": "yato kālaṅkato ahaṃ;",
"pv19:13.3": "Nābhijānāmi bhuttaṃ vā,",
"pv19:13.4": "pītaṃ vā pana pāniyaṃ.",
"pv19:14.1": "Yo saṃyamo so vināso,",
"pv19:14.2": "yo vināso so saṃyamo;",
"pv19:14.3": "Petā hi kira jānanti,",
"pv19:14.4": "yo saṃyamo so vināso.",
"pv19:15.1": "Ahaṃ pure saṃyamissaṃ,",
"pv19:15.2": "nādāsiṃ bahuke dhane;",
"pv19:15.3": "Santesu deyyadhammesu,",
"pv19:15.4": "dīpaṃ nākāsimattano;",
"pv19:15.5": "Svāhaṃ pacchānutappāmi,",
"pv19:15.6": "attakammaphalūpago.",
"pv19:16.1": "Uddhaṃ catūhi māsehi,",
"pv19:16.2": "kālaṃkiriyā bhavissati;",
"pv19:16.3": "Ekantakaṭukaṃ ghoraṃ,",
"pv19:16.4": "nirayaṃ papatissahaṃ.",
"pv19:17.1": "Catukkaṇṇaṃ catudvāraṃ,",
"pv19:17.2": "vibhattaṃ bhāgaso mitaṃ;",
"pv19:17.3": "Ayopākārapariyantaṃ,",
"pv19:17.4": "ayasā paṭikujjitaṃ.",
"pv19:18.1": "Tassa ayomayā bhūmi,",
"pv19:18.2": "jalitā tejasā yutā;",
"pv19:18.3": "Samantā yojanasataṃ,",
"pv19:18.4": "pharitvā tiṭṭhati sabbadā.",
"pv19:19.1": "Tatthāhaṃ dīghamaddhānaṃ,",
"pv19:19.2": "Dukkhaṃ vedissa vedanaṃ;",
"pv19:19.3": "Phalaṃ pāpassa kammassa,",
"pv19:19.4": "Tasmā socāmahaṃ bhusaṃ.",
"pv19:20.1": "Taṃ vo vadāmi bhaddaṃ vo,",
"pv19:20.2": "yāvantettha samāgatā;",
"pv19:20.3": "Mākattha pāpakaṃ kammaṃ,",
"pv19:20.4": "āvi vā yadi vā raho.",
"pv19:21.1": "Sace taṃ pāpakaṃ kammaṃ,",
"pv19:21.2": "karissatha karotha vā;",
"pv19:21.3": "Na vo dukkhā pamutyatthi,",
"pv19:21.4": "uppaccāpi palāyataṃ.",
"pv19:22.1": "Matteyyā hotha petteyyā,",
"pv19:22.2": "kule jeṭṭhāpacāyikā;",
"pv19:22.3": "Sāmaññā hotha brahmaññā,",
"pv19:22.4": "evaṃ saggaṃ gamissathā”ti.",
"pv19:23.1": "Dhanapālaseṭṭhipetavatthu sattamaṃ."
}