{
"pv29:1.1": "Petavatthu",
"pv29:2.1": "Cūḷavagga",
"pv29:3.1": "4. Bhusapetavatthu",
"pv29:4.1": "“Bhusāni eko sāliṃ punāparo,",
"pv29:4.2": "Ayañca nārī sakamaṃsalohitaṃ;",
"pv29:4.3": "Tuvañca gūthaṃ asuciṃ akantaṃ,",
"pv29:4.4": "Paribhuñjasi kissa ayaṃ vipāko”ti.",
"pv29:5.1": "“Ayaṃ pure mātaraṃ hiṃsati,",
"pv29:5.2": "Ayaṃ pana kūṭavāṇijo;",
"pv29:5.3": "Ayaṃ maṃsāni khāditvā,",
"pv29:5.4": "Musāvādena vañceti.",
"pv29:6.1": "Ahaṃ manussesu manussabhūtā,",
"pv29:6.2": "Agārinī sabbakulassa issarā;",
"pv29:6.3": "Santesu pariguhāmi,",
"pv29:6.4": "Mā ca kiñci ito adaṃ.",
"pv29:7.1": "Musāvādena chādemi,",
"pv29:7.2": "‘natthi etaṃ mama gehe;",
"pv29:7.3": "Sace santaṃ niguhāmi,",
"pv29:7.4": "gūtho me hotu bhojanaṃ’.",
"pv29:8.1": "Tassa kammassa vipākena,",
"pv29:8.2": "musāvādassa cūbhayaṃ;",
"pv29:8.3": "Sugandhaṃ sālino bhattaṃ,",
"pv29:8.4": "gūthaṃ me parivattati.",
"pv29:9.1": "Avañjhāni ca kammāni,",
"pv29:9.2": "Na hi kammaṃ vinassati;",
"pv29:9.3": "Duggandhaṃ kiminaṃ mīḷaṃ,",
"pv29:9.4": "Bhuñjāmi ca pivāmi cā”ti.",
"pv29:10.1": "Bhusapetavatthu catutthaṃ."
}