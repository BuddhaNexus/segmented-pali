{
"pv43:1.1": "Petavatthu",
"pv43:2.1": "Mahāvagga",
"pv43:3.1": "8. Gūthakhādakapetavatthu",
"pv43:4.1": "“Gūthakūpato uggantvā,",
"pv43:4.2": "ko nu dīno patiṭṭhasi;",
"pv43:4.3": "Nissaṃsayaṃ pāpakammanto,",
"pv43:4.4": "kiṃ nu saddahase tuvan”ti.",
"pv43:5.1": "“Ahaṃ bhadante petomhi,",
"pv43:5.2": "duggato yamalokiko;",
"pv43:5.3": "Pāpakammaṃ karitvāna,",
"pv43:5.4": "petalokaṃ ito gato”.",
"pv43:6.1": "“Kiṃ nu kāyena vācāya,",
"pv43:6.2": "manasā dukkaṭaṃ kataṃ;",
"pv43:6.3": "Kissa kammavipākena,",
"pv43:6.4": "idaṃ dukkhaṃ nigacchasī”ti.",
"pv43:7.1": "“Ahu āvāsiko mayhaṃ,",
"pv43:7.2": "issukī kulamaccharī;",
"pv43:7.3": "Ajjhāsito mayhaṃ ghare,",
"pv43:7.4": "kadariyo paribhāsako.",
"pv43:8.1": "Tassāhaṃ vacanaṃ sutvā,",
"pv43:8.2": "bhikkhavo paribhāsisaṃ;",
"pv43:8.3": "Tassa kammavipākena,",
"pv43:8.4": "petalokaṃ ito gato”ti.",
"pv43:9.1": "“Amitto mittavaṇṇena,",
"pv43:9.2": "yo te āsi kulūpako;",
"pv43:9.3": "Kāyassa bhedā duppañño,",
"pv43:9.4": "kiṃ nu pecca gatiṃ gato”ti.",
"pv43:10.1": "“Tassevāhaṃ pāpakammassa,",
"pv43:10.2": "sīse tiṭṭhāmi matthake;",
"pv43:10.3": "So ca paravisayaṃ patto,",
"pv43:10.4": "mameva paricārako.",
"pv43:11.1": "Yaṃ bhadante hadantaññe,",
"pv43:11.2": "etaṃ me hoti bhojanaṃ;",
"pv43:11.3": "Ahañca kho yaṃ hadāmi,",
"pv43:11.4": "etaṃ so upajīvatī”ti.",
"pv43:12.1": "Gūthakhādakapetavatthu aṭṭhamaṃ."
}