{
"pv11:1.1": "Petavatthu",
"pv11:2.1": "Uragavagga",
"pv11:3.1": "11. Nāgapetavatthu",
"pv11:4.1": "“Puratova setena paleti hatthinā,",
"pv11:4.2": "Majjhe pana assatarīrathena;",
"pv11:4.3": "Pacchā ca kaññā sivikāya nīyati,",
"pv11:4.4": "Obhāsayantī dasa sabbaso disā.",
"pv11:5.1": "Tumhe pana muggarahatthapāṇino,",
"pv11:5.2": "Rudammukhā chinnapabhinnagattā;",
"pv11:5.3": "Manussabhūtā kimakattha pāpaṃ,",
"pv11:5.4": "Yenaññamaññassa pivātha lohitan”ti.",
"pv11:6.1": "“Puratova yo gacchati kuñjarena,",
"pv11:6.2": "Setena nāgena catukkamena;",
"pv11:6.3": "Amhāka putto ahu jeṭṭhako so,",
"pv11:6.4": "Dānāni datvāna sukhī pamodati.",
"pv11:7.1": "Yo so majjhe assatarīrathena,",
"pv11:7.2": "Catubbhi yuttena suvaggitena;",
"pv11:7.3": "Amhāka putto ahu majjhimo so,",
"pv11:7.4": "Amaccharī dānavatī virocati.",
"pv11:8.1": "Yā sā ca pacchā sivikāya nīyati,",
"pv11:8.2": "Nārī sapaññā migamandalocanā;",
"pv11:8.3": "Amhāka dhītā ahu sā kaniṭṭhikā,",
"pv11:8.4": "Bhāgaḍḍhabhāgena sukhī pamodati.",
"pv11:9.1": "Ete ca dānāni adaṃsu pubbe,",
"pv11:9.2": "Pasannacittā samaṇabrāhmaṇānaṃ;",
"pv11:9.3": "Mayaṃ pana maccharino ahumha,",
"pv11:9.4": "Paribhāsakā samaṇabrāhmaṇānaṃ;",
"pv11:9.5": "Ete ca datvā paricārayanti,",
"pv11:9.6": "Mayañca sussāma naḷova chinno”ti.",
"pv11:10.1": "“Kiṃ tumhākaṃ bhojanaṃ kiṃ sayānaṃ,",
"pv11:10.2": "Kathañca yāpetha supāpadhammino;",
"pv11:10.3": "Pahūtabhogesu anappakesu,",
"pv11:10.4": "Sukhaṃ virādhāya dukkhajja pattā”ti.",
"pv11:11.1": "“Aññamaññaṃ vadhitvāna,",
"pv11:11.2": "pivāma pubbalohitaṃ;",
"pv11:11.3": "Bahuṃ pitvā na dhātā homa,",
"pv11:11.4": "nacchādimhase mayaṃ.",
"pv11:12.1": "Icceva maccā paridevayanti,",
"pv11:12.2": "Adāyakā pecca yamassa ṭhāyino;",
"pv11:12.3": "Ye te vidicca adhigamma bhoge,",
"pv11:12.4": "Na bhuñjare nāpi karonti puññaṃ.",
"pv11:13.1": "Te khuppipāsūpagatā parattha,",
"pv11:13.2": "Pacchā ciraṃ jhāyare ḍayhamānā;",
"pv11:13.3": "Kammāni katvāna dukhudrāni,",
"pv11:13.4": "Anubhonti dukkhaṃ kaṭukapphalāni.",
"pv11:14.1": "Ittaraṃ hi dhanaṃ dhaññaṃ,",
"pv11:14.2": "ittaraṃ idha jīvitaṃ;",
"pv11:14.3": "Ittaraṃ ittarato ñatvā,",
"pv11:14.4": "dīpaṃ kayirātha paṇḍito.",
"pv11:15.1": "Ye te evaṃ pajānanti,",
"pv11:15.2": "narā dhammassa kovidā;",
"pv11:15.3": "Te dāne nappamajjanti,",
"pv11:15.4": "sutvā arahataṃ vaco”ti.",
"pv11:16.1": "Nāgapetavatthu ekādasamaṃ."
}