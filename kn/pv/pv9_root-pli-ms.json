{
"pv9:1.1": "Petavatthu",
"pv9:2.1": "Uragavagga",
"pv9:3.1": "9. Mahāpesakārapetivatthu",
"pv9:4.1": "“Gūthañca muttaṃ ruhirañca pubbaṃ,",
"pv9:4.2": "Paribhuñjati kissa ayaṃ vipāko;",
"pv9:4.3": "Ayaṃ nu kiṃ kammamakāsi nārī,",
"pv9:4.4": "Yā sabbadā lohitapubbabhakkhā.",
"pv9:5.1": "Navāni vatthāni subhāni ceva,",
"pv9:5.2": "Mudūni suddhāni ca lomasāni;",
"pv9:5.3": "Dinnānimissā kitakā bhavanti,",
"pv9:5.4": "Ayaṃ nu kiṃ kammamakāsi nārī”ti.",
"pv9:6.1": "“Bhariyā mamesā ahū bhadante,",
"pv9:6.2": "Adāyikā maccharinī kadariyā;",
"pv9:6.3": "Sā maṃ dadantaṃ samaṇabrāhmaṇānaṃ,",
"pv9:6.4": "Akkosati ca paribhāsati ca.",
"pv9:7.1": "‘Gūthañca muttaṃ ruhirañca pubbaṃ,",
"pv9:7.2": "Paribhuñja tvaṃ asuciṃ sabbakālaṃ;",
"pv9:7.3": "Etaṃ te paralokasmiṃ hotu,",
"pv9:7.4": "Vatthā ca te kitakasamā bhavantu’;",
"pv9:7.5": "Etādisaṃ duccaritaṃ caritvā,",
"pv9:7.6": "Idhāgatā cirarattāya khādatī”ti.",
"pv9:8.1": "Mahāpesakārapetivatthu navamaṃ."
}