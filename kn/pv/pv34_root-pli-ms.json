{
"pv34:1.1": "Petavatthu",
"pv34:2.1": "Cūḷavagga",
"pv34:3.1": "9. Kūṭavinicchayikapetavatthu",
"pv34:4.1": "“Mālī kiriṭī kāyūrī,",
"pv34:4.2": "gattā te candanussadā;",
"pv34:4.3": "Pasannamukhavaṇṇosi,",
"pv34:4.4": "sūriyavaṇṇova sobhasi.",
"pv34:5.1": "Amānusā pārisajjā,",
"pv34:5.2": "ye teme paricārakā;",
"pv34:5.3": "Dasa kaññāsahassāni,",
"pv34:5.4": "yā temā paricārikā;",
"pv34:5.5": "Tā kambukāyūradharā,",
"pv34:5.6": "kañcanāveḷabhūsitā.",
"pv34:6.1": "Mahānubhāvosi tuvaṃ,",
"pv34:6.2": "lomahaṃsanarūpavā;",
"pv34:6.3": "Piṭṭhimaṃsāni attano,",
"pv34:6.4": "sāmaṃ ukkacca khādasi.",
"pv34:7.1": "Kiṃ nu kāyena vācāya,",
"pv34:7.2": "manasā dukkuṭaṃ kataṃ;",
"pv34:7.3": "Kissa kammavipākena,",
"pv34:7.4": "piṭṭhimaṃsāni attano;",
"pv34:7.5": "Sāmaṃ ukkacca khādasī”ti.",
"pv34:8.1": "“Attanohaṃ anatthāya,",
"pv34:8.2": "jīvaloke acārisaṃ;",
"pv34:8.3": "Pesuññamusāvādena,",
"pv34:8.4": "nikativañcanāya ca.",
"pv34:9.1": "Tatthāhaṃ parisaṃ gantvā,",
"pv34:9.2": "Saccakāle upaṭṭhite;",
"pv34:9.3": "Atthaṃ dhammaṃ nirākatvā,",
"pv34:9.4": "Adhammamanuvattisaṃ.",
"pv34:10.1": "Evaṃ so khādatattānaṃ,",
"pv34:10.2": "yo hoti piṭṭhimaṃsiko;",
"pv34:10.3": "Yathāhaṃ ajja khādāmi,",
"pv34:10.4": "piṭṭhimaṃsāni attano.",
"pv34:11.1": "Tayidaṃ tayā nārada sāmaṃ diṭṭhaṃ,",
"pv34:11.2": "Anukampakā ye kusalā vadeyyuṃ;",
"pv34:11.3": "Mā pesuṇaṃ mā ca musā abhāṇi,",
"pv34:11.4": "Mā khosi piṭṭhimaṃsiko tuvan”ti.",
"pv34:12.1": "Kūṭavinicchayikapetavatthu navamaṃ."
}