{
"pv2:1.1": "Petavatthu",
"pv2:2.1": "Uragavagga",
"pv2:3.1": "2. Sūkaramukhapetavatthu",
"pv2:4.1": "“Kāyo te sabbasovaṇṇo,",
"pv2:4.2": "sabbā obhāsate disā;",
"pv2:4.3": "Mukhaṃ te sūkarasseva,",
"pv2:4.4": "kiṃ kammamakarī pure”.",
"pv2:5.1": "“Kāyena saññato āsiṃ,",
"pv2:5.2": "vācāyāsimasaññato;",
"pv2:5.3": "Tena metādiso vaṇṇo,",
"pv2:5.4": "yathā passasi nārada.",
"pv2:6.1": "Taṃ tyāhaṃ nārada brūmi,",
"pv2:6.2": "Sāmaṃ diṭṭhamidaṃ tayā;",
"pv2:6.3": "Mākāsi mukhasā pāpaṃ,",
"pv2:6.4": "Mā kho sūkaramukho ahū”ti.",
"pv2:7.1": "Sūkaramukhapetavatthu dutiyaṃ."
}