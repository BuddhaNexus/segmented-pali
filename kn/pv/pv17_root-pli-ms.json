{
"pv17:1.1": "Petavatthu",
"pv17:2.1": "Ubbarivagga",
"pv17:3.1": "5. Maṭṭhakuṇḍalīpetavatthu",
"pv17:4.1": "“Alaṅkato maṭṭhakuṇḍalī,",
"pv17:4.2": "Māladhārī haricandanussado;",
"pv17:4.3": "Bāhā paggayha kandasi,",
"pv17:4.4": "Vanamajjhe kiṃ dukkhito tuvan”ti.",
"pv17:5.1": "“Sovaṇṇamayo pabhassaro,",
"pv17:5.2": "Uppanno rathapañjaro mama;",
"pv17:5.3": "Tassa cakkayugaṃ na vindāmi,",
"pv17:5.4": "Tena dukkhena jahāmi jīvitan”ti.",
"pv17:6.1": "“Sovaṇṇamayaṃ maṇimayaṃ,",
"pv17:6.2": "Lohitakamayaṃ atha rūpiyamayaṃ;",
"pv17:6.3": "Ācikkha me bhaddamāṇava,",
"pv17:6.4": "Cakkayugaṃ paṭipādayāmi te”ti.",
"pv17:7.1": "So māṇavo tassa pāvadi,",
"pv17:7.2": "“Candasūriyā ubhayettha dissare;",
"pv17:7.3": "Sovaṇṇamayo ratho mama,",
"pv17:7.4": "Tena cakkayugena sobhatī”ti.",
"pv17:8.1": "“Bālo kho tvaṃ asi māṇava,",
"pv17:8.2": "Yo tvaṃ patthayase apatthiyaṃ;",
"pv17:8.3": "Maññāmi tuvaṃ marissasi,",
"pv17:8.4": "Na hi tvaṃ lacchasi candasūriye”ti.",
"pv17:9.1": "“Gamanāgamanampi dissati,",
"pv17:9.2": "Vaṇṇadhātu ubhayattha vīthiyā;",
"pv17:9.3": "Peto kālakato na dissati,",
"pv17:9.4": "Ko nidha kandataṃ bālyataro”ti.",
"pv17:10.1": "“Saccaṃ kho vadesi māṇava,",
"pv17:10.2": "Ahameva kandataṃ bālyataro;",
"pv17:10.3": "Candaṃ viya dārako rudaṃ,",
"pv17:10.4": "Petaṃ kālakatābhipatthayinti.",
"pv17:11.1": "Ādittaṃ vata maṃ santaṃ,",
"pv17:11.2": "ghatasittaṃva pāvakaṃ;",
"pv17:11.3": "Vārinā viya osiñcaṃ,",
"pv17:11.4": "sabbaṃ nibbāpaye daraṃ.",
"pv17:12.1": "Abbahī vata me sallaṃ,",
"pv17:12.2": "sokaṃ hadayanissitaṃ;",
"pv17:12.3": "Yo me sokaparetassa,",
"pv17:12.4": "puttasokaṃ apānudi.",
"pv17:13.1": "Svāhaṃ abbūḷhasallosmi,",
"pv17:13.2": "sītibhūtosmi nibbuto;",
"pv17:13.3": "Na socāmi na rodāmi,",
"pv17:13.4": "tava sutvāna māṇavā”ti.",
"pv17:14.1": "“Devatā nusi gandhabbo,",
"pv17:14.2": "adu sakko purindado;",
"pv17:14.3": "Ko vā tvaṃ kassa vā putto,",
"pv17:14.4": "kathaṃ jānemu taṃ mayan”ti.",
"pv17:15.1": "“Yañca kandasi yañca rodasi,",
"pv17:15.2": "Puttaṃ āḷāhane sayaṃ dahitvā;",
"pv17:15.3": "Svāhaṃ kusalaṃ karitvā kammaṃ,",
"pv17:15.4": "Tidasānaṃ sahabyataṃ gato”ti.",
"pv17:16.1": "“Appaṃ vā bahuṃ vā nāddasāma,",
"pv17:16.2": "Dānaṃ dadantassa sake agāre;",
"pv17:16.3": "Uposathakammaṃ vā tādisaṃ,",
"pv17:16.4": "Kena kammena gatosi devalokan”ti.",
"pv17:17.1": "“Ābādhikohaṃ dukkhito gilāno,",
"pv17:17.2": "Āturarūpomhi sake nivesane;",
"pv17:17.3": "Buddhaṃ vigatarajaṃ vitiṇṇakaṅkhaṃ,",
"pv17:17.4": "Addakkhiṃ sugataṃ anomapaññaṃ.",
"pv17:18.1": "Svāhaṃ muditamano pasannacitto,",
"pv17:18.2": "Añjaliṃ akariṃ tathāgatassa;",
"pv17:18.3": "Tāhaṃ kusalaṃ karitvāna kammaṃ,",
"pv17:18.4": "Tidasānaṃ sahabyataṃ gato”ti.",
"pv17:19.1": "“Acchariyaṃ vata abbhutaṃ vata,",
"pv17:19.2": "Añjalikammassa ayamīdiso vipāko;",
"pv17:19.3": "Ahampi muditamano pasannacitto,",
"pv17:19.4": "Ajjeva buddhaṃ saraṇaṃ vajāmī”ti.",
"pv17:20.1": "“Ajjeva buddhaṃ saraṇaṃ vajāhi,",
"pv17:20.2": "Dhammañca saṃghañca pasannacitto;",
"pv17:20.3": "Tatheva sikkhāya padāni pañca,",
"pv17:20.4": "Akhaṇḍaphullāni samādiyassu.",
"pv17:21.1": "Pāṇātipātā viramassu khippaṃ,",
"pv17:21.2": "Loke adinnaṃ parivajjayassu;",
"pv17:21.3": "Amajjapo mā ca musā bhaṇāhi,",
"pv17:21.4": "Sakena dārena ca hohi tuṭṭho”ti.",
"pv17:22.1": "“Atthakāmosi me yakkha,",
"pv17:22.2": "hitakāmosi devate;",
"pv17:22.3": "Karomi tuyhaṃ vacanaṃ,",
"pv17:22.4": "tvaṃsi ācariyo mamāti.",
"pv17:23.1": "Upemi saraṇaṃ buddhaṃ,",
"pv17:23.2": "dhammañcāpi anuttaraṃ;",
"pv17:23.3": "Saṃghañca naradevassa,",
"pv17:23.4": "gacchāmi saraṇaṃ ahaṃ.",
"pv17:24.1": "Pāṇātipātā viramāmi khippaṃ,",
"pv17:24.2": "Loke adinnaṃ parivajjayāmi;",
"pv17:24.3": "Amajjapo no ca musā bhaṇāmi,",
"pv17:24.4": "Sakena dārena ca homi tuṭṭho”ti.",
"pv17:25.1": "Maṭṭhakuṇḍalīpetavatthu pañcamaṃ."
}