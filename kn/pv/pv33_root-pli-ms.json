{
"pv33:1.1": "Petavatthu",
"pv33:2.1": "Cūḷavagga",
"pv33:3.1": "8. Dutiyamigaluddakapetavatthu",
"pv33:4.1": "“Kūṭāgāre ca pāsāde,",
"pv33:4.2": "pallaṅke gonakatthate;",
"pv33:4.3": "Pañcaṅgikena turiyena,",
"pv33:4.4": "ramasi suppavādite.",
"pv33:5.1": "Tato ratyā vivasāne,",
"pv33:5.2": "sūriyuggamanaṃ pati;",
"pv33:5.3": "Apaviddho susānasmiṃ,",
"pv33:5.4": "bahudukkhaṃ nigacchasi.",
"pv33:6.1": "Kiṃ nu kāyena vācāya,",
"pv33:6.2": "manasā dukkaṭaṃ kataṃ;",
"pv33:6.3": "Kissa kammavipākena,",
"pv33:6.4": "idaṃ dukkhaṃ nigacchasi”.",
"pv33:7.1": "“Ahaṃ rājagahe ramme,",
"pv33:7.2": "ramaṇīye giribbaje;",
"pv33:7.3": "Migaluddo pure āsiṃ,",
"pv33:7.4": "luddo cāsimasaññato.",
"pv33:8.1": "Tassa me sahāyo suhadayo,",
"pv33:8.2": "Saddho āsi upāsako;",
"pv33:8.3": "Tassa kulupako bhikkhu,",
"pv33:8.4": "Āsi gotamasāvako;",
"pv33:8.5": "Sopi maṃ anukampanto,",
"pv33:8.6": "Nivāresi punappunaṃ.",
"pv33:9.1": "‘Mākāsi pāpakaṃ kammaṃ,",
"pv33:9.2": "Mā tāta duggatiṃ agā;",
"pv33:9.3": "Sace icchasi pecca sukhaṃ,",
"pv33:9.4": "Virama pāṇavadhā asaṃyamā’.",
"pv33:10.1": "Tassāhaṃ vacanaṃ sutvā,",
"pv33:10.2": "Sukhakāmassa hitānukampino;",
"pv33:10.3": "Nākāsiṃ sakalānusāsaniṃ,",
"pv33:10.4": "Cirapāpābhirato abuddhimā.",
"pv33:11.1": "So maṃ puna bhūrisumedhaso,",
"pv33:11.2": "Anukampāya saṃyame nivesayi;",
"pv33:11.3": "‘Sace divā hanasi pāṇino,",
"pv33:11.4": "Atha te rattiṃ bhavatu saṃyamo’.",
"pv33:12.1": "Svāhaṃ divā hanitvā pāṇino,",
"pv33:12.2": "Virato rattimahosi saññato;",
"pv33:12.3": "Rattāhaṃ paricāremi,",
"pv33:12.4": "Divā khajjāmi duggato.",
"pv33:13.1": "Tassa kammassa kusalassa,",
"pv33:13.2": "Anubhomi rattiṃ amānusiṃ;",
"pv33:13.3": "Divā paṭihatāva kukkurā,",
"pv33:13.4": "Upadhāvanti samantā khādituṃ.",
"pv33:14.1": "Ye ca te satatānuyogino,",
"pv33:14.2": "Dhuvaṃ payuttā sugatassa sāsane;",
"pv33:14.3": "Maññāmi te amatameva kevalaṃ,",
"pv33:14.4": "Adhigacchanti padaṃ asaṅkhatan”ti.",
"pv33:15.1": "Dutiyamigaluddakapetavatthu aṭṭhamaṃ."
}