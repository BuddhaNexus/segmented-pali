{
"pv25:1.1": "Petavatthu",
"pv25:2.1": "Ubbarivagga",
"pv25:3.1": "13. Ubbaripetavatthu",
"pv25:4.1": "Ahu rājā brahmadatto,",
"pv25:4.2": "pañcālānaṃ rathesabho;",
"pv25:4.3": "Ahorattānamaccayā,",
"pv25:4.4": "rājā kālamakrubbatha.",
"pv25:5.1": "Tassa āḷāhanaṃ gantvā,",
"pv25:5.2": "bhariyā kandati ubbarī;",
"pv25:5.3": "Brahmadattaṃ apassantī,",
"pv25:5.4": "brahmadattāti kandati.",
"pv25:6.1": "Isi ca tattha āgacchi,",
"pv25:6.2": "sampannacaraṇo muni;",
"pv25:6.3": "So ca tattha apucchittha,",
"pv25:6.4": "ye tattha susamāgatā.",
"pv25:7.1": "“Kassa idaṃ āḷāhanaṃ,",
"pv25:7.2": "nānāgandhasameritaṃ;",
"pv25:7.3": "Kassāyaṃ kandati bhariyā,",
"pv25:7.4": "ito dūragataṃ patiṃ;",
"pv25:7.5": "Brahmadattaṃ apassantī,",
"pv25:7.6": "‘brahmadattā’ti kandati”.",
"pv25:8.1": "Te ca tattha viyākaṃsu,",
"pv25:8.2": "ye tattha susamāgatā;",
"pv25:8.3": "“Brahmadattassa bhadante,",
"pv25:8.4": "brahmadattassa mārisa.",
"pv25:9.1": "Tassa idaṃ āḷāhanaṃ,",
"pv25:9.2": "nānāgandhasameritaṃ;",
"pv25:9.3": "Tassāyaṃ kandati bhariyā,",
"pv25:9.4": "ito dūragataṃ patiṃ;",
"pv25:9.5": "Brahmadattaṃ apassantī,",
"pv25:9.6": "‘brahmadattā’ti kandati”.",
"pv25:10.1": "“Chaḷāsītisahassāni,",
"pv25:10.2": "brahmadattassanāmakā;",
"pv25:10.3": "Imasmiṃ āḷāhane daḍḍhā,",
"pv25:10.4": "tesaṃ kamanusocasī”ti.",
"pv25:11.1": "“Yo rājā cūḷanīputto,",
"pv25:11.2": "pañcālānaṃ rathesabho;",
"pv25:11.3": "Taṃ bhante anusocāmi,",
"pv25:11.4": "bhattāraṃ sabbakāmadan”ti.",
"pv25:12.1": "“Sabbe vāhesuṃ rājāno,",
"pv25:12.2": "brahmadattassanāmakā;",
"pv25:12.3": "Sabbeva cūḷanīputtā,",
"pv25:12.4": "pañcālānaṃ rathesabhā.",
"pv25:13.1": "Sabbesaṃ anupubbena,",
"pv25:13.2": "mahesittamakārayi;",
"pv25:13.3": "Kasmā purimake hitvā,",
"pv25:13.4": "pacchimaṃ anusocasī”ti.",
"pv25:14.1": "“Ātume itthibhūtāya,",
"pv25:14.2": "dīgharattāya mārisa;",
"pv25:14.3": "Yassā me itthibhūtāya,",
"pv25:14.4": "saṃsāre bahubhāsasī”ti.",
"pv25:15.1": "“Ahu itthī ahu puriso,",
"pv25:15.2": "pasuyonimpi āgamā;",
"pv25:15.3": "Evametaṃ atītānaṃ,",
"pv25:15.4": "pariyanto na dissatī”ti.",
"pv25:16.1": "“Ādittaṃ vata maṃ santaṃ,",
"pv25:16.2": "ghatasittaṃva pāvakaṃ;",
"pv25:16.3": "Vārinā viya osiñcaṃ,",
"pv25:16.4": "sabbaṃ nibbāpaye daraṃ.",
"pv25:17.1": "Abbahī vata me sallaṃ,",
"pv25:17.2": "sokaṃ hadayanissitaṃ;",
"pv25:17.3": "Yo me sokaparetāya,",
"pv25:17.4": "patisokaṃ apānudi.",
"pv25:18.1": "Sāhaṃ abbūḷhasallāsmi,",
"pv25:18.2": "sītibhūtāsmi nibbutā;",
"pv25:18.3": "Na socāmi na rodāmi,",
"pv25:18.4": "tava sutvā mahāmunī”ti.",
"pv25:19.1": "Tassa taṃ vacanaṃ sutvā,",
"pv25:19.2": "samaṇassa subhāsitaṃ;",
"pv25:19.3": "Pattacīvaramādāya,",
"pv25:19.4": "pabbaji anagāriyaṃ.",
"pv25:20.1": "Sā ca pabbajitā santā,",
"pv25:20.2": "agārasmā anagāriyaṃ;",
"pv25:20.3": "Mettacittaṃ abhāvesi,",
"pv25:20.4": "brahmalokūpapattiyā.",
"pv25:21.1": "Gāmā gāmaṃ vicarantī,",
"pv25:21.2": "nigame rājadhāniyo;",
"pv25:21.3": "Uruvelā nāma so gāmo,",
"pv25:21.4": "yattha kālamakrubbatha.",
"pv25:22.1": "Mettacittaṃ ābhāvetvā,",
"pv25:22.2": "brahmalokūpapattiyā;",
"pv25:22.3": "Itthicittaṃ virājetvā,",
"pv25:22.4": "brahmalokūpagā ahūti.",
"pv25:23.1": "Ubbaripetavatthu terasamaṃ.",
"pv25:24.1": "Ubbarivaggo dutiyo.",
"pv25:25.1": "Tassuddānaṃ",
"pv25:26.1": "Mocakaṃ mātā mattā ca,",
"pv25:26.2": "Nandā kuṇḍalīnā ghaṭo;",
"pv25:26.3": "Dve seṭṭhī tunnavāyo ca,",
"pv25:26.4": "Uttara suttakaṇṇa ubbarīti."
}