{
"pv22:1.1": "Petavatthu",
"pv22:2.1": "Ubbarivagga",
"pv22:3.1": "10. Uttaramātupetivatthu",
"pv22:4.1": "Divāvihāragataṃ bhikkhuṃ,",
"pv22:4.2": "gaṅgātīre nisinnakaṃ;",
"pv22:4.3": "Taṃ petī upasaṅkamma,",
"pv22:4.4": "dubbaṇṇā bhīrudassanā.",
"pv22:5.1": "Kesā cassā atidīghā,",
"pv22:5.2": "yāvabhūmāvalambare;",
"pv22:5.3": "Kesehi sā paṭicchannā,",
"pv22:5.4": "samaṇaṃ etadabravi.",
"pv22:6.1": "“Pañcapaṇṇāsavassāni,",
"pv22:6.2": "yato kālaṅkatā ahaṃ;",
"pv22:6.3": "Nābhijānāmi bhuttaṃ vā,",
"pv22:6.4": "pītaṃ vā pana pāniyaṃ;",
"pv22:6.5": "Dehi tvaṃ pāniyaṃ bhante,",
"pv22:6.6": "tasitā pāniyāya me”ti.",
"pv22:7.1": "“Ayaṃ sītodikā gaṅgā,",
"pv22:7.2": "himavantato sandati;",
"pv22:7.3": "Piva etto gahetvāna,",
"pv22:7.4": "kiṃ maṃ yācasi pāniyan”ti.",
"pv22:8.1": "“Sacāhaṃ bhante gaṅgāya,",
"pv22:8.2": "sayaṃ gaṇhāmi pāniyaṃ;",
"pv22:8.3": "Lohitaṃ me parivattati,",
"pv22:8.4": "tasmā yācāmi pāniyan”ti.",
"pv22:9.1": "“Kiṃ nu kāyena vācāya,",
"pv22:9.2": "manasā dukkaṭaṃ kataṃ;",
"pv22:9.3": "Kissa kammavipākena,",
"pv22:9.4": "gaṅgā te hoti lohitan”ti.",
"pv22:10.1": "“Putto me uttaro nāma,",
"pv22:10.2": "saddho āsi upāsako;",
"pv22:10.3": "So ca mayhaṃ akāmāya,",
"pv22:10.4": "samaṇānaṃ pavecchati.",
"pv22:11.1": "Cīvaraṃ piṇḍapātañca,",
"pv22:11.2": "paccayaṃ sayanāsanaṃ;",
"pv22:11.3": "Tamahaṃ paribhāsāmi,",
"pv22:11.4": "maccherena upaddutā.",
"pv22:12.1": "Yaṃ tvaṃ mayhaṃ akāmāya,",
"pv22:12.2": "samaṇānaṃ pavecchasi;",
"pv22:12.3": "Cīvaraṃ piṇḍapātañca,",
"pv22:12.4": "paccayaṃ sayanāsanaṃ.",
"pv22:13.1": "Etaṃ te paralokasmiṃ,",
"pv22:13.2": "lohitaṃ hotu uttara;",
"pv22:13.3": "Tassa kammassa vipākena,",
"pv22:13.4": "gaṅgā me hoti lohitan”ti.",
"pv22:14.1": "Uttaramātupetivatthu dasamaṃ."
}