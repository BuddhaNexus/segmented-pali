{
"pv10:1.1": "Petavatthu",
"pv10:2.1": "Uragavagga",
"pv10:3.1": "10. Khallāṭiyapetivatthu",
"pv10:4.1": "“Kā nu antovimānasmiṃ,",
"pv10:4.2": "tiṭṭhantī nūpanikkhami;",
"pv10:4.3": "Upanikkhamassu bhadde,",
"pv10:4.4": "passāma taṃ bahiṭṭhitan”ti.",
"pv10:5.1": "“Aṭṭīyāmi harāyāmi,",
"pv10:5.2": "naggā nikkhamituṃ bahi;",
"pv10:5.3": "Kesehamhi paṭicchannā,",
"pv10:5.4": "puññaṃ me appakaṃ katan”ti.",
"pv10:6.1": "“Handuttarīyaṃ dadāmi te,",
"pv10:6.2": "idaṃ dussaṃ nivāsaya;",
"pv10:6.3": "Idaṃ dussaṃ nivāsetvā,",
"pv10:6.4": "ehi nikkhama sobhane;",
"pv10:6.5": "Upanikkhamassu bhadde,",
"pv10:6.6": "passāma taṃ bahiṭṭhitan”ti.",
"pv10:7.1": "“Hatthena hatthe te dinnaṃ,",
"pv10:7.2": "na mayhaṃ upakappati;",
"pv10:7.3": "Esetthupāsako saddho,",
"pv10:7.4": "sammāsambuddhasāvako.",
"pv10:8.1": "Etaṃ acchādayitvāna,",
"pv10:8.2": "mama dakkhiṇamādisa;",
"pv10:8.3": "Tathāhaṃ sukhitā hessaṃ,",
"pv10:8.4": "sabbakāmasamiddhinī”ti.",
"pv10:9.1": "Tañca te nhāpayitvāna,",
"pv10:9.2": "vilimpetvāna vāṇijā;",
"pv10:9.3": "Vatthehacchādayitvāna,",
"pv10:9.4": "tassā dakkhiṇamādisuṃ.",
"pv10:10.1": "Samanantarānuddiṭṭhe,",
"pv10:10.2": "vipāko udapajjatha;",
"pv10:10.3": "Bhojanacchādanapānīyaṃ,",
"pv10:10.4": "dakkhiṇāya idaṃ phalaṃ.",
"pv10:11.1": "Tato suddhā sucivasanā,",
"pv10:11.2": "kāsikuttamadhārinī;",
"pv10:11.3": "Hasantī vimānā nikkhami,",
"pv10:11.4": "dakkhiṇāya idaṃ phalanti.",
"pv10:12.1": "“Sucittarūpaṃ ruciraṃ,",
"pv10:12.2": "vimānaṃ te pabhāsati;",
"pv10:12.3": "Devate pucchitācikkha,",
"pv10:12.4": "kissa kammassidaṃ phalan”ti.",
"pv10:13.1": "“Bhikkhuno caramānassa,",
"pv10:13.2": "doṇinimmajjaniṃ ahaṃ;",
"pv10:13.3": "Adāsiṃ ujubhūtassa,",
"pv10:13.4": "vippasannena cetasā.",
"pv10:14.1": "Tassa kammassa kusalassa,",
"pv10:14.2": "vipākaṃ dīghamantaraṃ;",
"pv10:14.3": "Anubhomi vimānasmiṃ,",
"pv10:14.4": "tañca dāni parittakaṃ.",
"pv10:15.1": "Uddhaṃ catūhi māsehi,",
"pv10:15.2": "kālakiriyā bhavissati;",
"pv10:15.3": "Ekantakaṭukaṃ ghoraṃ,",
"pv10:15.4": "nirayaṃ papatissahaṃ.",
"pv10:16.1": "Catukkaṇṇaṃ catudvāraṃ,",
"pv10:16.2": "vibhattaṃ bhāgaso mitaṃ;",
"pv10:16.3": "Ayopākārapariyantaṃ,",
"pv10:16.4": "ayasā paṭikujjitaṃ.",
"pv10:17.1": "Tassa ayomayā bhūmi,",
"pv10:17.2": "jalitā tejasā yutā;",
"pv10:17.3": "Samantā yojanasataṃ,",
"pv10:17.4": "pharitvā tiṭṭhati sabbadā.",
"pv10:18.1": "Tatthāhaṃ dīghamaddhānaṃ,",
"pv10:18.2": "dukkhaṃ vedissa vedanaṃ;",
"pv10:18.3": "Phalañca pāpakammassa,",
"pv10:18.4": "tasmā socāmahaṃ bhusan”ti.",
"pv10:19.1": "Khallāṭiyapetivatthu dasamaṃ."
}