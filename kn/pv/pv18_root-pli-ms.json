{
"pv18:1.1": "Petavatthu",
"pv18:2.1": "Ubbarivagga",
"pv18:3.1": "6. Kaṇhapetavatthu",
"pv18:4.1": "“Uṭṭhehi kaṇha kiṃ sesi,",
"pv18:4.2": "Ko attho supanena te;",
"pv18:4.3": "Yo ca tuyhaṃ sako bhātā,",
"pv18:4.4": "Hadayaṃ cakkhu ca dakkhiṇaṃ;",
"pv18:4.5": "Tassa vātā balīyanti,",
"pv18:4.6": "Sasaṃ jappati kesavā”ti.",
"pv18:5.1": "“Tassa taṃ vacanaṃ sutvā,",
"pv18:5.2": "rohiṇeyyassa kesavo;",
"pv18:5.3": "Taramānarūpo vuṭṭhāsi,",
"pv18:5.4": "bhātusokena aṭṭito.",
"pv18:6.1": "Kiṃ nu ummattarūpova,",
"pv18:6.2": "kevalaṃ dvārakaṃ imaṃ;",
"pv18:6.3": "Saso sasoti lapasi,",
"pv18:6.4": "kīdisaṃ sasamicchasi.",
"pv18:7.1": "Sovaṇṇamayaṃ maṇimayaṃ,",
"pv18:7.2": "Lohamayaṃ atha rūpiyamayaṃ;",
"pv18:7.3": "Saṅkhasilāpavāḷamayaṃ,",
"pv18:7.4": "Kārayissāmi te sasaṃ.",
"pv18:8.1": "Santi aññepi sasakā,",
"pv18:8.2": "araññavanagocarā;",
"pv18:8.3": "Tepi te ānayissāmi,",
"pv18:8.4": "kīdisaṃ sasamicchasī”ti.",
"pv18:9.1": "“Nāhamete sase icche,",
"pv18:9.2": "ye sasā pathavissitā;",
"pv18:9.3": "Candato sasamicchāmi,",
"pv18:9.4": "taṃ me ohara kesavā”ti.",
"pv18:10.1": "“So nūna madhuraṃ ñāti,",
"pv18:10.2": "jīvitaṃ vijahissasi;",
"pv18:10.3": "Apatthiyaṃ patthayasi,",
"pv18:10.4": "candato sasamicchasī”ti.",
"pv18:11.1": "“Evañce kaṇha jānāsi,",
"pv18:11.2": "yathaññamanusāsasi;",
"pv18:11.3": "Kasmā pure mataṃ puttaṃ,",
"pv18:11.4": "ajjāpi manusocasi.",
"pv18:12.1": "Na yaṃ labbhā manussena,",
"pv18:12.2": "amanussena vā pana;",
"pv18:12.3": "Jāto me mā mari putto,",
"pv18:12.4": "kuto labbhā alabbhiyaṃ.",
"pv18:13.1": "Na mantā mūlabhesajjā,",
"pv18:13.2": "osadhehi dhanena vā;",
"pv18:13.3": "Sakkā ānayituṃ kaṇha,",
"pv18:13.4": "yaṃ petamanusocasi.",
"pv18:14.1": "Mahaddhanā mahābhogā,",
"pv18:14.2": "raṭṭhavantopi khattiyā;",
"pv18:14.3": "Pahūtadhanadhaññāse,",
"pv18:14.4": "tepi no ajarāmarā.",
"pv18:15.1": "Khattiyā brāhmaṇā vessā,",
"pv18:15.2": "suddā caṇḍālapukkusā;",
"pv18:15.3": "Ete caññe ca jātiyā,",
"pv18:15.4": "tepi no ajarāmarā.",
"pv18:16.1": "Ye mantaṃ parivattenti,",
"pv18:16.2": "chaḷaṅgaṃ brahmacintitaṃ;",
"pv18:16.3": "Ete caññe ca vijjāya,",
"pv18:16.4": "tepi no ajarāmarā.",
"pv18:17.1": "Isayo vāpi ye santā,",
"pv18:17.2": "saññatattā tapassino;",
"pv18:17.3": "Sarīraṃ tepi kālena,",
"pv18:17.4": "vijahanti tapassino.",
"pv18:18.1": "Bhāvitattā arahanto,",
"pv18:18.2": "katakiccā anāsavā;",
"pv18:18.3": "Nikkhipanti imaṃ dehaṃ,",
"pv18:18.4": "puññapāpaparikkhayā”ti.",
"pv18:19.1": "“Ādittaṃ vata maṃ santaṃ,",
"pv18:19.2": "ghatasittaṃva pāvakaṃ;",
"pv18:19.3": "Vārinā viya osiñcaṃ,",
"pv18:19.4": "sabbaṃ nibbāpaye daraṃ.",
"pv18:20.1": "Abbahī vata me sallaṃ,",
"pv18:20.2": "sokaṃ hadayanissitaṃ;",
"pv18:20.3": "Yo me sokaparetassa,",
"pv18:20.4": "puttasokaṃ apānudi.",
"pv18:21.1": "Svāhaṃ abbūḷhasallosmi,",
"pv18:21.2": "sītibhūtosmi nibbuto;",
"pv18:21.3": "Na socāmi na rodāmi,",
"pv18:21.4": "tava sutvāna bhātika”.",
"pv18:22.1": "Evaṃ karonti sappaññā,",
"pv18:22.2": "ye honti anukampakā;",
"pv18:22.3": "Nivattayanti sokamhā,",
"pv18:22.4": "ghaṭo jeṭṭhaṃva bhātaraṃ.",
"pv18:23.1": "Yassa etādisā honti,",
"pv18:23.2": "amaccā paricārakā;",
"pv18:23.3": "Subhāsitena anventi,",
"pv18:23.4": "ghaṭo jeṭṭhaṃva bhātaranti.",
"pv18:24.1": "Kaṇhapetavatthu chaṭṭhaṃ."
}