{
"pv44:1.1": "Petavatthu",
"pv44:2.1": "Mahāvagga",
"pv44:3.1": "9. Gūthakhādakapetivatthu",
"pv44:4.1": "“Gūthakūpato uggantvā,",
"pv44:4.2": "kā nu dīnā patiṭṭhasi;",
"pv44:4.3": "Nissaṃsayaṃ pāpakammantā,",
"pv44:4.4": "kiṃ nu saddahase tuvan”ti.",
"pv44:5.1": "“Ahaṃ bhadante petīmhi,",
"pv44:5.2": "duggatā yamalokikā;",
"pv44:5.3": "Pāpakammaṃ karitvāna,",
"pv44:5.4": "petalokaṃ ito gatā”ti.",
"pv44:6.1": "“Kiṃ nu kāyena vācāya,",
"pv44:6.2": "manasā dukkaṭaṃ kataṃ;",
"pv44:6.3": "Kissa kammavipākena,",
"pv44:6.4": "idaṃ dukkhaṃ nigacchasī”ti.",
"pv44:7.1": "“Ahu āvāsiko mayhaṃ,",
"pv44:7.2": "issukī kulamaccharī;",
"pv44:7.3": "Ajjhāsito mayhaṃ ghare,",
"pv44:7.4": "kadariyo paribhāsako.",
"pv44:8.1": "Tassāhaṃ vacanaṃ sutvā,",
"pv44:8.2": "bhikkhavo paribhāsisaṃ;",
"pv44:8.3": "Tassa kammavipākena,",
"pv44:8.4": "petalokaṃ ito gatā”ti.",
"pv44:9.1": "“Amitto mittavaṇṇena,",
"pv44:9.2": "yo te āsi kulūpako;",
"pv44:9.3": "Kāyassa bhedā duppañño,",
"pv44:9.4": "kiṃ nu pecca gatiṃ gato”ti.",
"pv44:10.1": "“Tassevāhaṃ pāpakammassa,",
"pv44:10.2": "sīse tiṭṭhāmi matthake;",
"pv44:10.3": "So ca paravisayaṃ patto,",
"pv44:10.4": "mameva paricārako.",
"pv44:11.1": "Yaṃ bhadante hadantaññe,",
"pv44:11.2": "etaṃ me hoti bhojanaṃ;",
"pv44:11.3": "Ahañca kho yaṃ hadāmi,",
"pv44:11.4": "etaṃ so upajīvatī”ti.",
"pv44:12.1": "Gūthakhādakapetivatthu navamaṃ."
}