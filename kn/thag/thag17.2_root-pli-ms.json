{
  "thag17.2:1.1": "Theragāthā",
  "thag17.2:2.1": "Tiṃsanipāta",
  "thag17.2:3.1": "Paṭhamavagga",
  "thag17.2:4.1": "17.2. Sāriputtattheragāthā",
  "thag17.2:5.1": "“Yathācārī yathāsato satīmā,",
  "thag17.2:5.2": "Yatasaṅkappajjhāyi appamatto;",
  "thag17.2:5.3": "Ajjhattarato samāhitatto,",
  "thag17.2:5.4": "Eko santusito tamāhu bhikkhuṃ.",
  "thag17.2:6.1": "Allaṃ sukkhaṃ vā bhuñjanto,",
  "thag17.2:6.2": "Na bāḷhaṃ suhito siyā;",
  "thag17.2:6.3": "Ūnūdaro mitāhāro,",
  "thag17.2:6.4": "Sato bhikkhu paribbaje.",
  "thag17.2:7.1": "Cattāro pañca ālope,",
  "thag17.2:7.2": "abhutvā udakaṃ pive;",
  "thag17.2:7.3": "Alaṃ phāsuvihārāya,",
  "thag17.2:7.4": "pahitattassa bhikkhuno.",
  "thag17.2:8.1": "Kappiyaṃ tañce chādeti,",
  "thag17.2:8.2": "cīvaraṃ idamatthikaṃ;",
  "thag17.2:8.3": "Alaṃ phāsuvihārāya,",
  "thag17.2:8.4": "pahitattassa bhikkhuno.",
  "thag17.2:9.1": "Pallaṅkena nisinnassa,",
  "thag17.2:9.2": "jaṇṇuke nābhivassati;",
  "thag17.2:9.3": "Alaṃ phāsuvihārāya,",
  "thag17.2:9.4": "pahitattassa bhikkhuno.",
  "thag17.2:10.1": "Yo sukhaṃ dukkhato adda,",
  "thag17.2:10.2": "dukkhamaddakkhi sallato;",
  "thag17.2:10.3": "Ubhayantarena nāhosi,",
  "thag17.2:10.4": "kena lokasmi kiṃ siyā.",
  "thag17.2:11.1": "Mā me kadāci pāpiccho,",
  "thag17.2:11.2": "kusīto hīnavīriyo;",
  "thag17.2:11.3": "Appassuto anādaro,",
  "thag17.2:11.4": "kena lokasmi kiṃ siyā.",
  "thag17.2:12.1": "Bahussuto ca medhāvī,",
  "thag17.2:12.2": "sīlesu susamāhito;",
  "thag17.2:12.3": "Cetosamathamanuyutto,",
  "thag17.2:12.4": "api muddhani tiṭṭhatu.",
  "thag17.2:13.1": "Yo papañcamanuyutto,",
  "thag17.2:13.2": "papañcābhirato mago;",
  "thag17.2:13.3": "Virādhayī so nibbānaṃ,",
  "thag17.2:13.4": "yogakkhemaṃ anuttaraṃ.",
  "thag17.2:14.1": "Yo ca papañcaṃ hitvāna,",
  "thag17.2:14.2": "nippapañcapathe rato;",
  "thag17.2:14.3": "Ārādhayī so nibbānaṃ,",
  "thag17.2:14.4": "yogakkhemaṃ anuttaraṃ.",
  "thag17.2:15.1": "Gāme vā yadi vāraññe,",
  "thag17.2:15.2": "Ninne vā yadi vā thale;",
  "thag17.2:15.3": "Yattha arahanto viharanti,",
  "thag17.2:15.4": "Taṃ bhūmirāmaṇeyyakaṃ.",
  "thag17.2:16.1": "Ramaṇīyāni araññāni,",
  "thag17.2:16.2": "yattha na ramatī jano;",
  "thag17.2:16.3": "Vītarāgā ramissanti,",
  "thag17.2:16.4": "na te kāmagavesino.",
  "thag17.2:17.1": "Nidhīnaṃva pavattāraṃ,",
  "thag17.2:17.2": "yaṃ passe vajjadassinaṃ;",
  "thag17.2:17.3": "Niggayhavādiṃ medhāviṃ,",
  "thag17.2:17.4": "tādisaṃ paṇḍitaṃ bhaje;",
  "thag17.2:17.5": "Tādisaṃ bhajamānassa,",
  "thag17.2:17.6": "seyyo hoti na pāpiyo.",
  "thag17.2:18.1": "Ovadeyyānusāseyya,",
  "thag17.2:18.2": "asabbhā ca nivāraye;",
  "thag17.2:18.3": "Satañhi so piyo hoti,",
  "thag17.2:18.4": "asataṃ hoti appiyo.",
  "thag17.2:19.1": "Aññassa bhagavā buddho,",
  "thag17.2:19.2": "dhammaṃ desesi cakkhumā;",
  "thag17.2:19.3": "Dhamme desiyamānamhi,",
  "thag17.2:19.4": "sotamodhesimatthiko.",
  "thag17.2:20.1": "Taṃ me amoghaṃ savanaṃ,",
  "thag17.2:20.2": "vimuttomhi anāsavo.",
  "thag17.2:21.1": "Neva pubbenivāsāya,",
  "thag17.2:21.2": "napi dibbassa cakkhuno;",
  "thag17.2:21.3": "Cetopariyāya iddhiyā,",
  "thag17.2:21.4": "cutiyā upapattiyā;",
  "thag17.2:21.5": "Sotadhātuvisuddhiyā,",
  "thag17.2:21.6": "paṇidhī me na vijjati”.",
  "thag17.2:22.1": "“Rukkhamūlaṃva nissāya,",
  "thag17.2:22.2": "muṇḍo saṅghāṭipāruto;",
  "thag17.2:22.3": "Paññāya uttamo thero,",
  "thag17.2:22.4": "upatissova jhāyati.",
  "thag17.2:23.1": "Avitakkaṃ samāpanno,",
  "thag17.2:23.2": "sammāsambuddhasāvako;",
  "thag17.2:23.3": "Ariyena tuṇhībhāvena,",
  "thag17.2:23.4": "upeto hoti tāvade.",
  "thag17.2:24.1": "Yathāpi pabbato selo,",
  "thag17.2:24.2": "acalo suppatiṭṭhito;",
  "thag17.2:24.3": "Evaṃ mohakkhayā bhikkhu,",
  "thag17.2:24.4": "pabbatova na vedhati”.",
  "thag17.2:25.1": "“Anaṅgaṇassa posassa,",
  "thag17.2:25.2": "niccaṃ sucigavesino;",
  "thag17.2:25.3": "Vālaggamattaṃ pāpassa,",
  "thag17.2:25.4": "abbhamattaṃva khāyati.",
  "thag17.2:26.1": "Nābhinandāmi maraṇaṃ,",
  "thag17.2:26.2": "nābhinandāmi jīvitaṃ;",
  "thag17.2:26.3": "Nikkhipissaṃ imaṃ kāyaṃ,",
  "thag17.2:26.4": "sampajāno patissato.",
  "thag17.2:27.1": "Nābhinandāmi maraṇaṃ,",
  "thag17.2:27.2": "nābhinandāmi jīvitaṃ;",
  "thag17.2:27.3": "Kālañca paṭikaṅkhāmi,",
  "thag17.2:27.4": "nibbisaṃ bhatako yathā”.",
  "thag17.2:28.1": "“Ubhayena midaṃ maraṇameva,",
  "thag17.2:28.2": "Nāmaraṇaṃ pacchā vā pure vā;",
  "thag17.2:28.3": "Paṭipajjatha mā vinassatha,",
  "thag17.2:28.4": "Khaṇo vo mā upaccagā.",
  "thag17.2:29.1": "Nagaraṃ yathā paccantaṃ,",
  "thag17.2:29.2": "guttaṃ santarabāhiraṃ;",
  "thag17.2:29.3": "Evaṃ gopetha attānaṃ,",
  "thag17.2:29.4": "khaṇo vo mā upaccagā;",
  "thag17.2:29.5": "Khaṇātītā hi socanti,",
  "thag17.2:29.6": "nirayamhi samappitā”.",
  "thag17.2:30.1": "“Upasanto uparato,",
  "thag17.2:30.2": "mantabhāṇī anuddhato;",
  "thag17.2:30.3": "Dhunāti pāpake dhamme,",
  "thag17.2:30.4": "dumapattaṃva māluto.",
  "thag17.2:31.1": "Upasanto uparato,",
  "thag17.2:31.2": "mantabhāṇī anuddhato;",
  "thag17.2:31.3": "Appāsi pāpake dhamme,",
  "thag17.2:31.4": "dumapattaṃva māluto.",
  "thag17.2:32.1": "Upasanto anāyāso,",
  "thag17.2:32.2": "vippasanno anāvilo;",
  "thag17.2:32.3": "Kalyāṇasīlo medhāvī,",
  "thag17.2:32.4": "dukkhassantakaro siyā”.",
  "thag17.2:33.1": "“Na vissase ekatiyesu evaṃ,",
  "thag17.2:33.2": "Agārisu pabbajitesu cāpi;",
  "thag17.2:33.3": "Sādhūpi hutvā na asādhu honti,",
  "thag17.2:33.4": "Asādhu hutvā puna sādhu honti.",
  "thag17.2:34.1": "Kāmacchando ca byāpādo,",
  "thag17.2:34.2": "thinamiddhañca bhikkhuno;",
  "thag17.2:34.3": "Uddhaccaṃ vicikicchā ca,",
  "thag17.2:34.4": "pañcete cittakelisā.",
  "thag17.2:35.1": "Yassa sakkariyamānassa,",
  "thag17.2:35.2": "asakkārena cūbhayaṃ;",
  "thag17.2:35.3": "Samādhi na vikampati,",
  "thag17.2:35.4": "appamādavihārino.",
  "thag17.2:36.1": "Taṃ jhāyinaṃ sātatikaṃ,",
  "thag17.2:36.2": "sukhumadiṭṭhivipassakaṃ;",
  "thag17.2:36.3": "Upādānakkhayārāmaṃ,",
  "thag17.2:36.4": "āhu sappuriso iti.",
  "thag17.2:37.1": "Mahāsamuddo pathavī,",
  "thag17.2:37.2": "pabbato anilopi ca;",
  "thag17.2:37.3": "Upamāya na yujjanti,",
  "thag17.2:37.4": "satthu varavimuttiyā.",
  "thag17.2:38.1": "Cakkānuvattako thero,",
  "thag17.2:38.2": "mahāñāṇī samāhito;",
  "thag17.2:38.3": "Pathavāpaggisamāno,",
  "thag17.2:38.4": "na rajjati na dussati.",
  "thag17.2:39.1": "Paññāpāramitaṃ patto,",
  "thag17.2:39.2": "mahābuddhi mahāmati;",
  "thag17.2:39.3": "Ajaḷo jaḷasamāno,",
  "thag17.2:39.4": "sadā carati nibbuto.",
  "thag17.2:40.1": "Pariciṇṇo mayā satthā,",
  "thag17.2:40.2": "…",
  "thag17.2:40.3": "pe …",
  "thag17.2:40.4": "bhavanetti samūhatā.",
  "thag17.2:41.1": "Sampādethappamādena,",
  "thag17.2:41.2": "esā me anusāsanī;",
  "thag17.2:41.3": "Handāhaṃ parinibbissaṃ,",
  "thag17.2:41.4": "vippamuttomhi sabbadhī”ti.",
  "thag17.2:42.1": "… Sāriputto thero …"
}