{
"iti50:1.1": "Itivuttaka 50",
"iti50:2.1": "Mūlasutta",
"iti50:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti50:4.1": "“Tīṇimāni, bhikkhave, akusalamūlāni.",
"iti50:4.2": "Katamāni tīṇi?",
"iti50:4.3": "Lobho akusalamūlaṃ, doso akusalamūlaṃ, moho akusalamūlaṃ—",
"iti50:4.4": "imāni kho, bhikkhave, tīṇi akusalamūlānī”ti.",
"iti50:4.5": "Etamatthaṃ bhagavā avoca.",
"iti50:4.6": "Tatthetaṃ iti vuccati:",
"iti50:5.1": "“Lobho doso ca moho ca,",
"iti50:5.2": "purisaṃ pāpacetasaṃ;",
"iti50:5.3": "Hiṃsanti attasambhūtā,",
"iti50:5.4": "tacasāraṃva samphalan”ti.",
"iti50:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti50:7.1": "Paṭhamaṃ."
}