{
"iti93:1.1": "Itivuttaka 93",
"iti93:2.1": "Aggisutta",
"iti93:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti93:4.1": "“Tayome, bhikkhave, aggī.",
"iti93:4.2": "Katame tayo?",
"iti93:4.3": "Rāgaggi, dosaggi, mohaggi—",
"iti93:4.4": "ime kho, bhikkhave, tayo aggī”ti.",
"iti93:4.5": "Etamatthaṃ bhagavā avoca.",
"iti93:4.6": "Tatthetaṃ iti vuccati:",
"iti93:5.1": "“Rāgaggi dahati macce,",
"iti93:5.2": "ratte kāmesu mucchite;",
"iti93:5.3": "Dosaggi pana byāpanne,",
"iti93:5.4": "nare pāṇātipātino.",
"iti93:6.1": "Mohaggi pana sammūḷhe,",
"iti93:6.2": "ariyadhamme akovide;",
"iti93:6.3": "Ete aggī ajānantā,",
"iti93:6.4": "sakkāyābhiratā pajā.",
"iti93:7.1": "Te vaḍḍhayanti nirayaṃ,",
"iti93:7.2": "tiracchānañca yoniyo;",
"iti93:7.3": "Asuraṃ pettivisayaṃ,",
"iti93:7.4": "amuttā mārabandhanā.",
"iti93:8.1": "Ye ca rattindivā yuttā,",
"iti93:8.2": "sammāsambuddhasāsane;",
"iti93:8.3": "Te nibbāpenti rāgaggiṃ,",
"iti93:8.4": "niccaṃ asubhasaññino.",
"iti93:9.1": "Dosaggiṃ pana mettāya,",
"iti93:9.2": "nibbāpenti naruttamā;",
"iti93:9.3": "Mohaggiṃ pana paññāya,",
"iti93:9.4": "yāyaṃ nibbedhagāminī.",
"iti93:10.1": "Te nibbāpetvā nipakā,",
"iti93:10.2": "rattindivamatanditā;",
"iti93:10.3": "Asesaṃ parinibbanti,",
"iti93:10.4": "asesaṃ dukkhamaccaguṃ.",
"iti93:11.1": "Ariyaddasā vedaguno,",
"iti93:11.2": "sammadaññāya paṇḍitā;",
"iti93:11.3": "Jātikkhayamabhiññāya,",
"iti93:11.4": "nāgacchanti punabbhavan”ti.",
"iti93:12.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti93:13.1": "Catutthaṃ."
}