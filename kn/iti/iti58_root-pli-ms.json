{
"iti58:1.1": "Itivuttaka 58",
"iti58:2.1": "Taṇhāsutta",
"iti58:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti58:4.1": "“Tisso imā, bhikkhave, taṇhā.",
"iti58:4.2": "Katamā tisso?",
"iti58:4.3": "Kāmataṇhā, bhavataṇhā, vibhavataṇhā—",
"iti58:4.4": "imā kho, bhikkhave, tisso taṇhā”ti.",
"iti58:4.5": "Etamatthaṃ bhagavā avoca.",
"iti58:4.6": "Tatthetaṃ iti vuccati:",
"iti58:5.1": "“Taṇhāyogena saṃyuttā,",
"iti58:5.2": "rattacittā bhavābhave;",
"iti58:5.3": "Te yogayuttā mārassa,",
"iti58:5.4": "ayogakkhemino janā;",
"iti58:5.5": "Sattā gacchanti saṃsāraṃ,",
"iti58:5.6": "jātīmaraṇagāmino.",
"iti58:6.1": "Ye ca taṇhaṃ pahantvāna,",
"iti58:6.2": "vītataṇhā bhavābhave;",
"iti58:6.3": "Te ve pāraṅgatā loke,",
"iti58:6.4": "ye pattā āsavakkhayan”ti.",
"iti58:7.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti58:8.1": "Navamaṃ."
}