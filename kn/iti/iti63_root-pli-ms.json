{
"iti63:1.1": "Itivuttaka 63",
"iti63:2.1": "Addhāsutta",
"iti63:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti63:4.1": "“Tayome, bhikkhave, addhā.",
"iti63:4.2": "Katame tayo?",
"iti63:4.3": "Atīto addhā, anāgato addhā, paccuppanno addhā—",
"iti63:4.4": "ime kho, bhikkhave, tayo addhā”ti.",
"iti63:4.5": "Etamatthaṃ bhagavā avoca.",
"iti63:4.6": "Tatthetaṃ iti vuccati:",
"iti63:5.1": "“Akkheyyasaññino sattā,",
"iti63:5.2": "akkheyyasmiṃ patiṭṭhitā;",
"iti63:5.3": "Akkheyyaṃ apariññāya,",
"iti63:5.4": "yogamāyanti maccuno.",
"iti63:6.1": "Akkheyyañca pariññāya,",
"iti63:6.2": "akkhātāraṃ na maññati;",
"iti63:6.3": "Phuṭṭho vimokkho manasā,",
"iti63:6.4": "santipadamanuttaraṃ.",
"iti63:7.1": "Sa ve akkheyyasampanno,",
"iti63:7.2": "santo santipade rato;",
"iti63:7.3": "Saṅkhāyasevī dhammaṭṭho,",
"iti63:7.4": "saṅkhyaṃ nopeti vedagū”ti.",
"iti63:8.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti63:9.1": "Catutthaṃ."
}