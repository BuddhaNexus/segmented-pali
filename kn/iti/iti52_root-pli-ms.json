{
"iti52:1.1": "Itivuttaka 52",
"iti52:2.1": "Paṭhamavedanāsutta",
"iti52:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti52:4.1": "“Tisso imā, bhikkhave, vedanā.",
"iti52:4.2": "Katamā tisso?",
"iti52:4.3": "Sukhā vedanā, dukkhā vedanā, adukkhamasukhā vedanā—",
"iti52:4.4": "imā kho, bhikkhave, tisso vedanā”ti.",
"iti52:4.5": "Etamatthaṃ bhagavā avoca.",
"iti52:4.6": "Tatthetaṃ iti vuccati:",
"iti52:5.1": "“Samāhito sampajāno,",
"iti52:5.2": "sato buddhassa sāvako;",
"iti52:5.3": "Vedanā ca pajānāti,",
"iti52:5.4": "vedanānañca sambhavaṃ.",
"iti52:6.1": "Yattha cetā nirujjhanti,",
"iti52:6.2": "maggañca khayagāminaṃ;",
"iti52:6.3": "Vedanānaṃ khayā bhikkhu,",
"iti52:6.4": "nicchāto parinibbuto”ti.",
"iti52:7.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti52:8.1": "Tatiyaṃ."
}