{
"iti80:1.1": "Itivuttaka 80",
"iti80:2.1": "Vitakkasutta",
"iti80:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti80:4.1": "“Tayome, bhikkhave, akusalavitakkā.",
"iti80:4.2": "Katame tayo?",
"iti80:4.3": "Anavaññattipaṭisaṃyutto vitakko, lābhasakkārasilokapaṭisaṃyutto vitakko, parānuddayatāpaṭisaṃyutto vitakko.",
"iti80:4.4": "Ime kho, bhikkhave, tayo akusalavitakkā”ti.",
"iti80:4.5": "Etamatthaṃ bhagavā avoca.",
"iti80:4.6": "Tatthetaṃ iti vuccati:",
"iti80:5.1": "“Anavaññattisaṃyutto,",
"iti80:5.2": "lābhasakkāragāravo;",
"iti80:5.3": "Sahanandī amaccehi,",
"iti80:5.4": "ārā saṃyojanakkhayā.",
"iti80:6.1": "Yo ca puttapasuṃ hitvā,",
"iti80:6.2": "Vivāhe saṃharāni ca;",
"iti80:6.3": "Bhabbo so tādiso bhikkhu,",
"iti80:6.4": "Phuṭṭhuṃ sambodhimuttaman”ti.",
"iti80:7.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti80:8.1": "Paṭhamaṃ."
}