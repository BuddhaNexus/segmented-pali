{
"iti3:1.1": "Itivuttaka 3",
"iti3:2.1": "Mohasutta",
"iti3:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti3:4.1": "“Ekadhammaṃ, bhikkhave, pajahatha;",
"iti3:4.2": "ahaṃ vo pāṭibhogo anāgāmitāya.",
"iti3:4.3": "Katamaṃ ekadhammaṃ?",
"iti3:4.4": "Mohaṃ, bhikkhave, ekadhammaṃ pajahatha;",
"iti3:4.5": "ahaṃ vo pāṭibhogo anāgāmitāyā”ti.",
"iti3:4.6": "Etamatthaṃ bhagavā avoca.",
"iti3:4.7": "Tatthetaṃ iti vuccati:",
"iti3:5.1": "“Yena mohena mūḷhāse,",
"iti3:5.2": "sattā gacchanti duggatiṃ;",
"iti3:5.3": "Taṃ mohaṃ sammadaññāya,",
"iti3:5.4": "pajahanti vipassino;",
"iti3:5.5": "Pahāya na punāyanti,",
"iti3:5.6": "imaṃ lokaṃ kudācanan”ti.",
"iti3:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti3:7.1": "Tatiyaṃ."
}