{
"iti77:1.1": "Itivuttaka 77",
"iti77:2.1": "Bhidurasutta",
"iti77:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti77:4.1": "“Bhidurāyaṃ, bhikkhave, kāyo, viññāṇaṃ virāgadhammaṃ, sabbe upadhī aniccā dukkhā vipariṇāmadhammā”ti.",
"iti77:4.2": "Etamatthaṃ bhagavā avoca.",
"iti77:4.3": "Tatthetaṃ iti vuccati:",
"iti77:5.1": "“Kāyañca bhiduraṃ ñatvā,",
"iti77:5.2": "Viññāṇañca virāgunaṃ;",
"iti77:5.3": "Upadhīsu bhayaṃ disvā,",
"iti77:5.4": "Jātimaraṇamaccagā;",
"iti77:5.5": "Sampatvā paramaṃ santiṃ,",
"iti77:5.6": "Kālaṃ kaṅkhati bhāvitatto”ti.",
"iti77:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti77:7.1": "Aṭṭhamaṃ."
}