{
"iti57:1.1": "Itivuttaka 57",
"iti57:2.1": "Dutiyaāsavasutta",
"iti57:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti57:4.1": "“Tayome, bhikkhave, āsavā.",
"iti57:4.2": "Katame tayo?",
"iti57:4.3": "Kāmāsavo, bhavāsavo, avijjāsavo—",
"iti57:4.4": "ime kho, bhikkhave, tayo āsavā”ti.",
"iti57:4.5": "Etamatthaṃ bhagavā avoca.",
"iti57:4.6": "Tatthetaṃ iti vuccati:",
"iti57:5.1": "“Yassa kāmāsavo khīṇo,",
"iti57:5.2": "avijjā ca virājitā;",
"iti57:5.3": "Bhavāsavo parikkhīṇo,",
"iti57:5.4": "vippamutto nirūpadhi;",
"iti57:5.5": "Dhāreti antimaṃ dehaṃ,",
"iti57:5.6": "jetvā māraṃ savāhinin”ti.",
"iti57:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti57:7.1": "Aṭṭhamaṃ."
}