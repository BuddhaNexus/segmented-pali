{
"iti23:1.1": "Itivuttaka 23",
"iti23:2.1": "Ubhayatthasutta",
"iti23:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti23:4.1": "“Ekadhammo, bhikkhave, bhāvito bahulīkato ubho atthe samadhigayha tiṭṭhati—",
"iti23:4.2": "diṭṭhadhammikañceva atthaṃ samparāyikañca.",
"iti23:4.3": "Katamo ekadhammo?",
"iti23:4.4": "Appamādo kusalesu dhammesu.",
"iti23:4.5": "Ayaṃ kho, bhikkhave, ekadhammo bhāvito bahulīkato ubho atthe samadhigayha tiṭṭhati—",
"iti23:4.6": "diṭṭhadhammikañceva atthaṃ samparāyikañcā”ti.",
"iti23:4.7": "Etamatthaṃ bhagavā avoca.",
"iti23:4.8": "Tatthetaṃ iti vuccati:",
"iti23:5.1": "“Appamādaṃ pasaṃsanti,",
"iti23:5.2": "puññakiriyāsu paṇḍitā;",
"iti23:5.3": "Appamatto ubho atthe,",
"iti23:5.4": "adhigaṇhāti paṇḍito.",
"iti23:6.1": "Diṭṭhe dhamme ca yo attho,",
"iti23:6.2": "yo cattho samparāyiko;",
"iti23:6.3": "Atthābhisamayā dhīro,",
"iti23:6.4": "paṇḍitoti pavuccatī”ti.",
"iti23:7.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti23:8.1": "Tatiyaṃ."
}