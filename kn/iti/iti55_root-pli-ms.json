{
"iti55:1.1": "Itivuttaka 55",
"iti55:2.1": "Dutiyaesanāsutta",
"iti55:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti55:4.1": "“Tisso imā, bhikkhave, esanā.",
"iti55:4.2": "Katamā tisso?",
"iti55:4.3": "Kāmesanā, bhavesanā, brahmacariyesanā—",
"iti55:4.4": "imā kho, bhikkhave, tisso esanā”ti.",
"iti55:4.5": "Etamatthaṃ bhagavā avoca.",
"iti55:4.6": "Tatthetaṃ iti vuccati:",
"iti55:5.1": "“Kāmesanā bhavesanā,",
"iti55:5.2": "brahmacariyesanā saha;",
"iti55:5.3": "Iti saccaparāmāso,",
"iti55:5.4": "diṭṭhiṭṭhānā samussayā.",
"iti55:6.1": "Sabbarāgavirattassa,",
"iti55:6.2": "taṇhakkhayavimuttino;",
"iti55:6.3": "Esanā paṭinissaṭṭhā,",
"iti55:6.4": "diṭṭhiṭṭhānā samūhatā;",
"iti55:6.5": "Esanānaṃ khayā bhikkhu,",
"iti55:6.6": "nirāso akathaṅkathī”ti.",
"iti55:7.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti55:8.1": "Chaṭṭhaṃ."
}