{
"iti76:1.1": "Itivuttaka 76",
"iti76:2.1": "Sukhapatthanāsutta",
"iti76:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti76:4.1": "“Tīṇimāni, bhikkhave, sukhāni patthayamāno sīlaṃ rakkheyya paṇḍito.",
"iti76:4.2": "Katamāni tīṇi?",
"iti76:4.3": "Pasaṃsā me āgacchatūti sīlaṃ rakkheyya paṇḍito, bhogā me uppajjantūti sīlaṃ rakkheyya paṇḍito, kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjissāmīti sīlaṃ rakkheyya paṇḍito.",
"iti76:4.4": "Imāni kho, bhikkhave, tīṇi sukhāni patthayamāno sīlaṃ rakkheyya paṇḍito”ti.",
"iti76:4.5": "Etamatthaṃ bhagavā avoca.",
"iti76:4.6": "Tatthetaṃ iti vuccati:",
"iti76:5.1": "“Sīlaṃ rakkheyya medhāvī,",
"iti76:5.2": "patthayāno tayo sukhe;",
"iti76:5.3": "Pasaṃsaṃ vittalābhañca,",
"iti76:5.4": "pecca sagge pamodanaṃ.",
"iti76:6.1": "Akarontopi ce pāpaṃ,",
"iti76:6.2": "karontamupasevati;",
"iti76:6.3": "Saṅkiyo hoti pāpasmiṃ,",
"iti76:6.4": "avaṇṇo cassa rūhati.",
"iti76:7.1": "Yādisaṃ kurute mittaṃ,",
"iti76:7.2": "yādisaṃ cūpasevati;",
"iti76:7.3": "Sa ve tādisako hoti,",
"iti76:7.4": "sahavāso hi tādiso.",
"iti76:8.1": "Sevamāno sevamānaṃ,",
"iti76:8.2": "samphuṭṭho samphusaṃ paraṃ;",
"iti76:8.3": "Saro diddho kalāpaṃva,",
"iti76:8.4": "alittamupalimpati;",
"iti76:8.5": "Upalepabhayā dhīro,",
"iti76:8.6": "neva pāpasakhā siyā.",
"iti76:9.1": "Pūtimacchaṃ kusaggena,",
"iti76:9.2": "yo naro upanayhati;",
"iti76:9.3": "Kusāpi pūti vāyanti,",
"iti76:9.4": "evaṃ bālūpasevanā.",
"iti76:10.1": "Tagarañca palāsena,",
"iti76:10.2": "yo naro upanayhati;",
"iti76:10.3": "Pattāpi surabhi vāyanti,",
"iti76:10.4": "evaṃ dhīrūpasevanā.",
"iti76:11.1": "Tasmā pattapuṭasseva,",
"iti76:11.2": "ñatvā sampākamattano;",
"iti76:11.3": "Asante nupaseveyya,",
"iti76:11.4": "sante seveyya paṇḍito;",
"iti76:11.5": "Asanto nirayaṃ nenti,",
"iti76:11.6": "santo pāpenti suggatin”ti.",
"iti76:12.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti76:13.1": "Sattamaṃ."
}