{
"iti62:1.1": "Itivuttaka 62",
"iti62:2.1": "Indriyasutta",
"iti62:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti62:4.1": "“Tīṇimāni, bhikkhave, indriyāni.",
"iti62:4.2": "Katamāni tīṇi?",
"iti62:4.3": "Anaññātaññassāmītindriyaṃ, aññindriyaṃ, aññātāvindriyaṃ—",
"iti62:4.4": "imāni kho, bhikkhave, tīṇi indriyānī”ti.",
"iti62:4.5": "Etamatthaṃ bhagavā avoca.",
"iti62:4.6": "Tatthetaṃ iti vuccati:",
"iti62:5.1": "“Sekhassa sikkhamānassa,",
"iti62:5.2": "ujumaggānusārino;",
"iti62:5.3": "Khayasmiṃ paṭhamaṃ ñāṇaṃ,",
"iti62:5.4": "tato aññā anantarā.",
"iti62:6.1": "Tato aññā vimuttassa,",
"iti62:6.2": "ñāṇaṃ ve hoti tādino;",
"iti62:6.3": "Akuppā me vimuttīti,",
"iti62:6.4": "bhavasaṃyojanakkhayā.",
"iti62:7.1": "Sa ve indriyasampanno,",
"iti62:7.2": "santo santipade rato;",
"iti62:7.3": "Dhāreti antimaṃ dehaṃ,",
"iti62:7.4": "jetvā māraṃ savāhinin”ti.",
"iti62:8.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti62:9.1": "Tatiyaṃ."
}