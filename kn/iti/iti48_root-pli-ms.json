{
"iti48:1.1": "Itivuttaka 48",
"iti48:2.1": "Āpāyikasutta",
"iti48:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti48:4.1": "“Dveme, bhikkhave, āpāyikā nerayikā idamappahāya.",
"iti48:4.2": "Katame dve?",
"iti48:4.3": "Yo ca abrahmacārī brahmacāripaṭiñño, yo ca paripuṇṇaṃ parisuddhaṃ brahmacariyaṃ carantaṃ amūlakena abrahmacariyena anuddhaṃseti.",
"iti48:4.4": "Ime kho, bhikkhave, dve āpāyikā nerayikā idamappahāyā”ti.",
"iti48:4.5": "Etamatthaṃ bhagavā avoca.",
"iti48:4.6": "Tatthetaṃ iti vuccati:",
"iti48:5.1": "“Abhūtavādī nirayaṃ upeti,",
"iti48:5.2": "Yo vāpi katvā na karomi cāha;",
"iti48:5.3": "Ubhopi te pecca samā bhavanti,",
"iti48:5.4": "Nihīnakammā manujā parattha.",
"iti48:6.1": "Kāsāvakaṇṭhā bahavo,",
"iti48:6.2": "pāpadhammā asaññatā;",
"iti48:6.3": "Pāpā pāpehi kammehi,",
"iti48:6.4": "nirayaṃ te upapajjare.",
"iti48:7.1": "Seyyo ayoguḷo bhutto,",
"iti48:7.2": "tatto aggisikhūpamo;",
"iti48:7.3": "Yañce bhuñjeyya dussīlo,",
"iti48:7.4": "raṭṭhapiṇḍamasaññato”ti.",
"iti48:8.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti48:9.1": "Ekādasamaṃ."
}