{
"ne3:1.1": "Netti",
"ne3:2.1": "3. Niddesavāra",
"ne3:3.1": "Tattha saṅkhepato netti kittitā.",
"ne3:4.1": "3.1. Hārasaṅkhepa",
"ne3:5.1": "Assādādīnavatā,",
"ne3:5.2": "Nissaraṇampi ca phalaṃ upāyo ca;",
"ne3:5.3": "Āṇattī ca bhagavato,",
"ne3:5.4": "Yogīnaṃ desanāhāro.",
"ne3:6.1": "Yaṃ pucchitañca vissajjitañca,",
"ne3:6.2": "Suttassa yā ca anugīti;",
"ne3:6.3": "Suttassa yo pavicayo,",
"ne3:6.4": "Hāro vicayoti niddiṭṭho.",
"ne3:7.1": "Sabbesaṃ hārānaṃ,",
"ne3:7.2": "Yā bhūmī yo ca gocaro tesaṃ;",
"ne3:7.3": "Yuttāyuttaparikkhā,",
"ne3:7.4": "Hāro yuttīti niddiṭṭho.",
"ne3:8.1": "Dhammaṃ deseti jino,",
"ne3:8.2": "Tassa ca dhammassa yaṃ padaṭṭhānaṃ;",
"ne3:8.3": "Iti yāva sabbadhammā,",
"ne3:8.4": "Eso hāro padaṭṭhāno.",
"ne3:9.1": "Vuttamhi ekadhamme,",
"ne3:9.2": "Ye dhammā ekalakkhaṇā keci;",
"ne3:9.3": "Vuttā bhavanti sabbe,",
"ne3:9.4": "So hāro lakkhaṇo nāma.",
"ne3:10.1": "Neruttamadhippāyo,",
"ne3:10.2": "Byañjanamatha desanānidānañca;",
"ne3:10.3": "Pubbāparānusandhī,",
"ne3:10.4": "Eso hāro catubyūho.",
"ne3:11.1": "Ekamhi padaṭṭhāne,",
"ne3:11.2": "Pariyesati sesakaṃ padaṭṭhānaṃ;",
"ne3:11.3": "Āvaṭṭati paṭipakkhe,",
"ne3:11.4": "Āvaṭṭo nāma so hāro.",
"ne3:12.1": "Dhammañca padaṭṭhānaṃ,",
"ne3:12.2": "Bhūmiñca vibhajjate ayaṃ hāro;",
"ne3:12.3": "Sādhāraṇe asādhā-",
"ne3:12.4": "Raṇe ca neyyo vibhattīti.",
"ne3:13.1": "Kusalākusale dhamme,",
"ne3:13.2": "Niddiṭṭhe bhāvite pahīne ca;",
"ne3:13.3": "Parivattati paṭipakkhe,",
"ne3:13.4": "Hāro parivattano nāma.",
"ne3:14.1": "Vevacanāni bahūni tu,",
"ne3:14.2": "Sutte vuttāni ekadhammassa;",
"ne3:14.3": "Yo jānāti suttavidū,",
"ne3:14.4": "Vevacano nāma so hāro.",
"ne3:15.1": "Ekaṃ bhagavā dhammaṃ,",
"ne3:15.2": "Paññattīhi vividhāhi deseti;",
"ne3:15.3": "So ākāro ñeyyo,",
"ne3:15.4": "Paññattī nāma hāroti.",
"ne3:16.1": "Yo ca paṭiccuppādo,",
"ne3:16.2": "Indriyakhandhā ca dhātu āyatanā;",
"ne3:16.3": "Etehi otarati yo,",
"ne3:16.4": "Otaraṇo nāma so hāro.",
"ne3:17.1": "Vissajjitamhi pañhe,",
"ne3:17.2": "Gāthāyaṃ pucchitā yamārabbha;",
"ne3:17.3": "Suddhāsuddhaparikkhā,",
"ne3:17.4": "Hāro so sodhano nāma.",
"ne3:18.1": "Ekattatāya dhammā,",
"ne3:18.2": "Yepi ca vemattatāya niddiṭṭhā;",
"ne3:18.3": "Te na vikappayitabbā,",
"ne3:18.4": "Eso hāro adhiṭṭhāno.",
"ne3:19.1": "Ye dhammā yaṃ dhammaṃ,",
"ne3:19.2": "Janayantippaccayā paramparato;",
"ne3:19.3": "Hetumavakaḍḍhayitvā,",
"ne3:19.4": "Eso hāro parikkhāro.",
"ne3:20.1": "Ye dhammā yaṃmūlā,",
"ne3:20.2": "Ye cekatthā pakāsitā muninā;",
"ne3:20.3": "Te samaropayitabbā,",
"ne3:20.4": "Esa samāropano hāro.",
"ne3:21.1": "3.2. Nayasaṅkhepa",
"ne3:22.1": "Taṇhañca avijjampi ca,",
"ne3:22.2": "Samathena vipassanāya yo neti;",
"ne3:22.3": "Saccehi yojayitvā,",
"ne3:22.4": "Ayaṃ nayo nandiyāvaṭṭo.",
"ne3:23.1": "Yo akusale samūlehi,",
"ne3:23.2": "Neti kusale ca kusalamūlehi;",
"ne3:23.3": "Bhūtaṃ tathaṃ avitathaṃ,",
"ne3:23.4": "Tipukkhalaṃ taṃ nayaṃ āhu.",
"ne3:24.1": "Yo neti vipallāsehi,",
"ne3:24.2": "Kilese indriyehi saddhamme;",
"ne3:24.3": "Etaṃ nayaṃ nayavidū,",
"ne3:24.4": "Sīhavikkīḷitaṃ āhu.",
"ne3:25.1": "Veyyākaraṇesu hi ye,",
"ne3:25.2": "Kusalākusalā tahiṃ tahiṃ vuttā;",
"ne3:25.3": "Manasā volokayate,",
"ne3:25.4": "Taṃ khu disālocanaṃ āhu.",
"ne3:26.1": "Oloketvā disalocanena,",
"ne3:26.2": "Ukkhipiya yaṃ samāneti;",
"ne3:26.3": "Sabbe kusalākusale,",
"ne3:26.4": "Ayaṃ nayo aṅkuso nāma.",
"ne3:27.1": "Soḷasa hārā paṭhamaṃ,",
"ne3:27.2": "Disalocanato disā viloketvā;",
"ne3:27.3": "Saṅkhipiya aṅkusena hi,",
"ne3:27.4": "Nayehi tīhi niddise suttaṃ.",
"ne3:28.1": "3.3. Dvādasapada",
"ne3:29.1": "Akkharaṃ padaṃ byañjanaṃ,",
"ne3:29.2": "nirutti tatheva niddeso;",
"ne3:29.3": "Ākārachaṭṭhavacanaṃ,",
"ne3:29.4": "ettāva byañjanaṃ sabbaṃ.",
"ne3:30.1": "Saṅkāsanā pakāsanā,",
"ne3:30.2": "Vivaraṇā vibhajanuttānīkammapaññatti;",
"ne3:30.3": "Etehi chahi padehi,",
"ne3:30.4": "Attho kammañca niddiṭṭhaṃ.",
"ne3:31.1": "Tīṇi ca nayā anūnā,",
"ne3:31.2": "Atthassa ca chappadāni gaṇitāni;",
"ne3:31.3": "Navahi padehi bhagavato,",
"ne3:31.4": "Vacanassattho samāyutto.",
"ne3:32.1": "Atthassa navappadāni,",
"ne3:32.2": "Byañjanapariyeṭṭhiyā catubbīsa;",
"ne3:32.3": "Ubhayaṃ saṅkalayitvā,",
"ne3:32.4": "Tettiṃsā ettikā nettīti.",
"ne3:33.1": "Niddesavāro."
}