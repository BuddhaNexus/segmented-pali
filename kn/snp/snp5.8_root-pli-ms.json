{
"snp5.8:1.1": "Sutta Nipāta 5.8",
"snp5.8:2.1": "Nandamāṇavapucchā",
"snp5.8:3.1": "“Santi loke munayo,",
"snp5.8:3.2": "iccāyasmā nando",
"snp5.8:3.3": "Janā vadanti tayidaṃ kathaṃsu;",
"snp5.8:3.4": "Ñāṇūpapannaṃ no muniṃ vadanti,",
"snp5.8:3.5": "Udāhu ve jīvitenūpapannaṃ”.",
"snp5.8:4.1": "“Na diṭṭhiyā na sutiyā na ñāṇena, () #2",
"snp5.8:4.2": "Munīdha nanda kusalā vadanti;",
"snp5.8:4.3": "Visenikatvā anīghā nirāsā,",
"snp5.8:4.4": "Caranti ye te munayoti brūmi”.",
"snp5.8:5.1": "“Ye kecime samaṇabrāhmaṇāse,",
"snp5.8:5.2": "iccāyasmā nando",
"snp5.8:5.3": "Diṭṭhassutenāpi vadanti suddhiṃ;",
"snp5.8:5.4": "Sīlabbatenāpi vadanti suddhiṃ,",
"snp5.8:5.5": "Anekarūpena vadanti suddhiṃ.",
"snp5.8:5.6": "Kaccissu te bhagavā tattha yatā carantā, #3",
"snp5.8:5.7": "Atāru jātiñca jarañca mārisa;",
"snp5.8:5.8": "Pucchāmi taṃ bhagavā brūhi metaṃ”.",
"snp5.8:6.1": "“Ye kecime samaṇabrāhmaṇāse, #4",
"snp5.8:6.2": "nandāti bhagavā",
"snp5.8:6.3": "Diṭṭhassutenāpi vadanti suddhiṃ;",
"snp5.8:6.4": "Sīlabbatenāpi vadanti suddhiṃ,",
"snp5.8:6.5": "Anekarūpena vadanti suddhiṃ;",
"snp5.8:6.6": "Kiñcāpi te tattha yatā caranti,",
"snp5.8:6.7": "Nātariṃsu jātijaranti brūmi”.",
"snp5.8:7.1": "“Ye kecime samaṇabrāhmaṇāse,",
"snp5.8:7.2": "iccāyasmā nando",
"snp5.8:7.3": "Diṭṭhassutenāpi vadanti suddhiṃ;",
"snp5.8:7.4": "Sīlabbatenāpi vadanti suddhiṃ,",
"snp5.8:7.5": "Anekarūpena vadanti suddhiṃ.",
"snp5.8:7.6": "Te ce muni brūsi anoghatiṇṇe, #5",
"snp5.8:7.7": "Atha ko carahi devamanussaloke;",
"snp5.8:7.8": "Atāri jātiñca jarañca mārisa,",
"snp5.8:7.9": "Pucchāmi taṃ bhagavā brūhi metaṃ”.",
"snp5.8:8.1": "“Nāhaṃ sabbe samaṇabrāhmaṇāse,",
"snp5.8:8.2": "nandāti bhagavā",
"snp5.8:8.3": "Jātijarāya nivutāti brūmi;",
"snp5.8:8.4": "Ye sīdha diṭṭhaṃ va sutaṃ mutaṃ vā,",
"snp5.8:8.5": "Sīlabbataṃ vāpi pahāya sabbaṃ.",
"snp5.8:8.6": "Anekarūpampi pahāya sabbaṃ, #6",
"snp5.8:8.7": "Taṇhaṃ pariññāya anāsavāse;",
"snp5.8:8.8": "Te ve narā oghatiṇṇāti brūmi”.",
"snp5.8:9.1": "“Etābhinandāmi vaco mahesino,",
"snp5.8:9.2": "Sukittitaṃ gotamanūpadhīkaṃ;",
"snp5.8:9.3": "Ye sīdha diṭṭhaṃ va sutaṃ mutaṃ vā,",
"snp5.8:9.4": "Sīlabbataṃ vāpi pahāya sabbaṃ.",
"snp5.8:9.5": "Anekarūpampi pahāya sabbaṃ, #7",
"snp5.8:9.6": "Taṇhaṃ pariññāya anāsavāse;",
"snp5.8:9.7": "Ahampi te oghatiṇṇāti brūmī”ti.",
"snp5.8:10.1": "Nandamāṇavapucchā sattamā."
}