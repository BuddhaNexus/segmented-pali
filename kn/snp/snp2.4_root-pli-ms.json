{
"snp2.4:1.1": "Sutta Nipāta 2.4",
"snp2.4:2.1": "Maṅgalasutta",
"snp2.4:3.1": "Evaṃ me sutaṃ—",
"snp2.4:3.2": "ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
"snp2.4:3.3": "Atha kho aññatarā devatā abhikkantāya rattiyā abhikkantavaṇṇā kevalakappaṃ jetavanaṃ obhāsetvā yena bhagavā tenupasaṅkami;",
"snp2.4:3.4": "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi.",
"snp2.4:3.5": "Ekamantaṃ ṭhitā kho sā devatā bhagavantaṃ gāthāya ajjhabhāsi:",
"snp2.4:4.1": "“Bahū devā manussā ca,",
"snp2.4:4.2": "maṅgalāni acintayuṃ;",
"snp2.4:4.3": "Ākaṅkhamānā sotthānaṃ,",
"snp2.4:4.4": "brūhi maṅgalamuttamaṃ”.",
"snp2.4:5.1": "“Asevanā ca bālānaṃ, #2",
"snp2.4:5.2": "paṇḍitānañca sevanā;",
"snp2.4:5.3": "Pūjā ca pūjaneyyānaṃ,",
"snp2.4:5.4": "etaṃ maṅgalamuttamaṃ.",
"snp2.4:6.1": "Patirūpadesavāso ca, #3",
"snp2.4:6.2": "pubbe ca katapuññatā;",
"snp2.4:6.3": "Attasammāpaṇidhi ca,",
"snp2.4:6.4": "etaṃ maṅgalamuttamaṃ.",
"snp2.4:7.1": "Bāhusaccañca sippañca, #4",
"snp2.4:7.2": "vinayo ca susikkhito;",
"snp2.4:7.3": "Subhāsitā ca yā vācā,",
"snp2.4:7.4": "etaṃ maṅgalamuttamaṃ.",
"snp2.4:8.1": "Mātāpitu upaṭṭhānaṃ, #5",
"snp2.4:8.2": "puttadārassa saṅgaho;",
"snp2.4:8.3": "Anākulā ca kammantā,",
"snp2.4:8.4": "etaṃ maṅgalamuttamaṃ.",
"snp2.4:9.1": "Dānañca dhammacariyā ca, #6",
"snp2.4:9.2": "ñātakānañca saṅgaho;",
"snp2.4:9.3": "Anavajjāni kammāni,",
"snp2.4:9.4": "etaṃ maṅgalamuttamaṃ.",
"snp2.4:10.1": "Āratī viratī pāpā, #7",
"snp2.4:10.2": "majjapānā ca saṃyamo;",
"snp2.4:10.3": "Appamādo ca dhammesu,",
"snp2.4:10.4": "etaṃ maṅgalamuttamaṃ.",
"snp2.4:11.1": "Gāravo ca nivāto ca, #8",
"snp2.4:11.2": "santuṭṭhi ca kataññutā;",
"snp2.4:11.3": "Kālena dhammassavanaṃ,",
"snp2.4:11.4": "etaṃ maṅgalamuttamaṃ.",
"snp2.4:12.1": "Khantī ca sovacassatā, #9",
"snp2.4:12.2": "samaṇānañca dassanaṃ;",
"snp2.4:12.3": "Kālena dhammasākacchā,",
"snp2.4:12.4": "etaṃ maṅgalamuttamaṃ.",
"snp2.4:13.1": "Tapo ca brahmacariyañca, #10",
"snp2.4:13.2": "Ariyasaccāna dassanaṃ;",
"snp2.4:13.3": "Nibbānasacchikiriyā ca,",
"snp2.4:13.4": "Etaṃ maṅgalamuttamaṃ.",
"snp2.4:14.1": "Phuṭṭhassa lokadhammehi, #11",
"snp2.4:14.2": "Cittaṃ yassa na kampati;",
"snp2.4:14.3": "Asokaṃ virajaṃ khemaṃ,",
"snp2.4:14.4": "Etaṃ maṅgalamuttamaṃ.",
"snp2.4:15.1": "Etādisāni katvāna, #12",
"snp2.4:15.2": "Sabbattha maparājitā;",
"snp2.4:15.3": "Sabbattha sotthiṃ gacchanti,",
"snp2.4:15.4": "Taṃ tesaṃ maṅgalamuttaman”ti.",
"snp2.4:16.1": "Maṅgalasuttaṃ catutthaṃ."
}