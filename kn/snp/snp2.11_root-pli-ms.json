{
"snp2.11:1.1": "Sutta Nipāta 2.11",
"snp2.11:2.1": "Rāhulasutta",
"snp2.11:3.1": "“Kacci abhiṇhasaṃvāsā,",
"snp2.11:3.2": "nāvajānāsi paṇḍitaṃ;",
"snp2.11:3.3": "Ukkādhāro manussānaṃ,",
"snp2.11:3.4": "kacci apacito tayā”.",
"snp2.11:4.1": "“Nāhaṃ abhiṇhasaṃvāsā, #2",
"snp2.11:4.2": "avajānāmi paṇḍitaṃ;",
"snp2.11:4.3": "Ukkādhāro manussānaṃ,",
"snp2.11:4.4": "niccaṃ apacito mayā”.",
"snp2.11:5.1": "“Pañca kāmaguṇe hitvā, #3",
"snp2.11:5.2": "piyarūpe manorame;",
"snp2.11:5.3": "Saddhāya gharā nikkhamma,",
"snp2.11:5.4": "dukkhassantakaro bhava.",
"snp2.11:6.1": "Mitte bhajassu kalyāṇe, #4",
"snp2.11:6.2": "pantañca sayanāsanaṃ;",
"snp2.11:6.3": "Vivittaṃ appanigghosaṃ,",
"snp2.11:6.4": "mattaññū hohi bhojane.",
"snp2.11:7.1": "Cīvare piṇḍapāte ca, #5",
"snp2.11:7.2": "paccaye sayanāsane;",
"snp2.11:7.3": "Etesu taṇhaṃ mākāsi,",
"snp2.11:7.4": "mā lokaṃ punarāgami.",
"snp2.11:8.1": "Saṃvuto pātimokkhasmiṃ, #6",
"snp2.11:8.2": "indriyesu ca pañcasu;",
"snp2.11:8.3": "Sati kāyagatā tyatthu,",
"snp2.11:8.4": "nibbidābahulo bhava.",
"snp2.11:9.1": "Nimittaṃ parivajjehi, #7",
"snp2.11:9.2": "subhaṃ rāgūpasañhitaṃ;",
"snp2.11:9.3": "Asubhāya cittaṃ bhāvehi,",
"snp2.11:9.4": "ekaggaṃ susamāhitaṃ.",
"snp2.11:10.1": "Animittañca bhāvehi, #8",
"snp2.11:10.2": "Mānānusayamujjaha;",
"snp2.11:10.3": "Tato mānābhisamayā,",
"snp2.11:10.4": "Upasanto carissatī”ti.",
"snp2.11:11.1": "Itthaṃ sudaṃ bhagavā āyasmantaṃ rāhulaṃ imāhi gāthāhi abhiṇhaṃ ovadatīti.",
"snp2.11:12.1": "Rāhulasuttaṃ ekādasamaṃ."
}