{
"snp1.9:1.1": "Sutta Nipāta 1.9",
"snp1.9:2.1": "Hemavatasutta",
"snp1.9:3.1": "“Ajja pannaraso uposatho,",
"snp1.9:3.2": "iti sātāgiro yakkho",
"snp1.9:3.3": "Dibbā ratti upaṭṭhitā;",
"snp1.9:3.4": "Anomanāmaṃ satthāraṃ,",
"snp1.9:3.5": "Handa passāma gotamaṃ”.",
"snp1.9:4.1": "“Kacci mano supaṇihito, #2",
"snp1.9:4.2": "iti hemavato yakkho",
"snp1.9:4.3": "Sabbabhūtesu tādino;",
"snp1.9:4.4": "Kacci iṭṭhe aniṭṭhe ca,",
"snp1.9:4.5": "Saṅkappassa vasīkatā”.",
"snp1.9:5.1": "“Mano cassa supaṇihito, #3",
"snp1.9:5.2": "iti sātāgiro yakkho",
"snp1.9:5.3": "Sabbabhūtesu tādino;",
"snp1.9:5.4": "Atho iṭṭhe aniṭṭhe ca,",
"snp1.9:5.5": "Saṅkappassa vasīkatā”.",
"snp1.9:6.1": "“Kacci adinnaṃ nādiyati, #4",
"snp1.9:6.2": "iti hemavato yakkho",
"snp1.9:6.3": "Kacci pāṇesu saññato;",
"snp1.9:6.4": "Kacci ārā pamādamhā,",
"snp1.9:6.5": "Kacci jhānaṃ na riñcati”.",
"snp1.9:7.1": "“Na so adinnaṃ ādiyati, #5",
"snp1.9:7.2": "iti sātāgiro yakkho",
"snp1.9:7.3": "Atho pāṇesu saññato;",
"snp1.9:7.4": "Atho ārā pamādamhā,",
"snp1.9:7.5": "Buddho jhānaṃ na riñcati”.",
"snp1.9:8.1": "“Kacci musā na bhaṇati, #6",
"snp1.9:8.2": "iti hemavato yakkho",
"snp1.9:8.3": "Kacci na khīṇabyappatho;",
"snp1.9:8.4": "Kacci vebhūtiyaṃ nāha,",
"snp1.9:8.5": "Kacci samphaṃ na bhāsati”.",
"snp1.9:9.1": "“Musā ca so na bhaṇati, #7",
"snp1.9:9.2": "iti sātāgiro yakkho",
"snp1.9:9.3": "Atho na khīṇabyappatho;",
"snp1.9:9.4": "Atho vebhūtiyaṃ nāha,",
"snp1.9:9.5": "Mantā atthañca bhāsati”.",
"snp1.9:10.1": "“Kacci na rajjati kāmesu, #8",
"snp1.9:10.2": "iti hemavato yakkho",
"snp1.9:10.3": "Kacci cittaṃ anāvilaṃ;",
"snp1.9:10.4": "Kacci mohaṃ atikkanto,",
"snp1.9:10.5": "Kacci dhammesu cakkhumā”.",
"snp1.9:11.1": "“Na so rajjati kāmesu, #9",
"snp1.9:11.2": "iti sātāgiro yakkho",
"snp1.9:11.3": "Atho cittaṃ anāvilaṃ;",
"snp1.9:11.4": "Sabbamohaṃ atikkanto,",
"snp1.9:11.5": "Buddho dhammesu cakkhumā”.",
"snp1.9:12.1": "“Kacci vijjāya sampanno, #10",
"snp1.9:12.2": "iti hemavato yakkho",
"snp1.9:12.3": "Kacci saṃsuddhacāraṇo;",
"snp1.9:12.4": "Kaccissa āsavā khīṇā,",
"snp1.9:12.5": "Kacci natthi punabbhavo”.",
"snp1.9:13.1": "“Vijjāya ceva sampanno, #11",
"snp1.9:13.2": "iti sātāgiro yakkho",
"snp1.9:13.3": "Atho saṃsuddhacāraṇo;",
"snp1.9:13.4": "Sabbassa āsavā khīṇā,",
"snp1.9:13.5": "Natthi tassa punabbhavo”.",
"snp1.9:14.1": "“Sampannaṃ munino cittaṃ, #12",
"snp1.9:14.2": "Kammunā byappathena ca;",
"snp1.9:14.3": "Vijjācaraṇasampannaṃ,",
"snp1.9:14.4": "Dhammato naṃ pasaṃsati”.",
"snp1.9:15.1": "“Sampannaṃ munino cittaṃ, #13",
"snp1.9:15.2": "Kammunā byappathena ca;",
"snp1.9:15.3": "Vijjācaraṇasampannaṃ,",
"snp1.9:15.4": "Dhammato anumodasi.",
"snp1.9:16.1": "Sampannaṃ munino cittaṃ, #14",
"snp1.9:16.2": "Kammunā byappathena ca;",
"snp1.9:16.3": "Vijjācaraṇasampannaṃ,",
"snp1.9:16.4": "Handa passāma gotamaṃ”.",
"snp1.9:17.1": "“Eṇijaṅghaṃ kisaṃ vīraṃ, #15",
"snp1.9:17.2": "Appāhāraṃ alolupaṃ;",
"snp1.9:17.3": "Muniṃ vanasmiṃ jhāyantaṃ,",
"snp1.9:17.4": "Ehi passāma gotamaṃ.",
"snp1.9:18.1": "Sīhaṃvekacaraṃ nāgaṃ, #16",
"snp1.9:18.2": "Kāmesu anapekkhinaṃ;",
"snp1.9:18.3": "Upasaṅkamma pucchāma,",
"snp1.9:18.4": "Maccupāsappamocanaṃ.",
"snp1.9:19.1": "Akkhātāraṃ pavattāraṃ, #17",
"snp1.9:19.2": "Sabbadhammāna pāraguṃ;",
"snp1.9:19.3": "Buddhaṃ verabhayātītaṃ,",
"snp1.9:19.4": "Mayaṃ pucchāma gotamaṃ”.",
"snp1.9:20.1": "“Kismiṃ loko samuppanno, #18",
"snp1.9:20.2": "iti hemavato yakkho",
"snp1.9:20.3": "Kismiṃ kubbati santhavaṃ;",
"snp1.9:20.4": "Kissa loko upādāya,",
"snp1.9:20.5": "Kismiṃ loko vihaññati”.",
"snp1.9:21.1": "“Chasu loko samuppanno, #19",
"snp1.9:21.2": "hemavatāti bhagavā",
"snp1.9:21.3": "Chasu kubbati santhavaṃ;",
"snp1.9:21.4": "Channameva upādāya,",
"snp1.9:21.5": "Chasu loko vihaññati”.",
"snp1.9:22.1": "“Katamaṃ taṃ upādānaṃ, #20",
"snp1.9:22.2": "Yattha loko vihaññati;",
"snp1.9:22.3": "Niyyānaṃ pucchito brūhi,",
"snp1.9:22.4": "Kathaṃ dukkhā pamuccati”.",
"snp1.9:23.1": "“Pañca kāmaguṇā loke, #21",
"snp1.9:23.2": "Manochaṭṭhā paveditā;",
"snp1.9:23.3": "Ettha chandaṃ virājetvā,",
"snp1.9:23.4": "Evaṃ dukkhā pamuccati.",
"snp1.9:24.1": "Etaṃ lokassa niyyānaṃ, #22",
"snp1.9:24.2": "Akkhātaṃ vo yathātathaṃ;",
"snp1.9:24.3": "Etaṃ vo ahamakkhāmi,",
"snp1.9:24.4": "Evaṃ dukkhā pamuccati”.",
"snp1.9:25.1": "“Ko sūdha tarati oghaṃ, #23",
"snp1.9:25.2": "Kodha tarati aṇṇavaṃ;",
"snp1.9:25.3": "Appatiṭṭhe anālambe,",
"snp1.9:25.4": "Ko gambhīre na sīdati”.",
"snp1.9:26.1": "“Sabbadā sīlasampanno, #24",
"snp1.9:26.2": "Paññavā susamāhito;",
"snp1.9:26.3": "Ajjhattacintī satimā,",
"snp1.9:26.4": "Oghaṃ tarati duttaraṃ.",
"snp1.9:27.1": "Virato kāmasaññāya, #25",
"snp1.9:27.2": "Sabbasaṃyojanātigo;",
"snp1.9:27.3": "Nandībhavaparikkhīṇo,",
"snp1.9:27.4": "So gambhīre na sīdati”.",
"snp1.9:28.1": "“Gambhīrapaññaṃ nipuṇatthadassiṃ, #26",
"snp1.9:28.2": "Akiñcanaṃ kāmabhave asattaṃ;",
"snp1.9:28.3": "Taṃ passatha sabbadhi vippamuttaṃ,",
"snp1.9:28.4": "Dibbe pathe kamamānaṃ mahesiṃ.",
"snp1.9:29.1": "Anomanāmaṃ nipuṇatthadassiṃ, #27",
"snp1.9:29.2": "Paññādadaṃ kāmālaye asattaṃ;",
"snp1.9:29.3": "Taṃ passatha sabbaviduṃ sumedhaṃ,",
"snp1.9:29.4": "Ariye pathe kamamānaṃ mahesiṃ.",
"snp1.9:30.1": "Sudiṭṭhaṃ vata no ajja, #28",
"snp1.9:30.2": "Suppabhātaṃ suhuṭṭhitaṃ;",
"snp1.9:30.3": "Yaṃ addasāma sambuddhaṃ,",
"snp1.9:30.4": "Oghatiṇṇamanāsavaṃ.",
"snp1.9:31.1": "Ime dasasatā yakkhā, #29",
"snp1.9:31.2": "Iddhimanto yasassino;",
"snp1.9:31.3": "Sabbe taṃ saraṇaṃ yanti,",
"snp1.9:31.4": "Tvaṃ no satthā anuttaro.",
"snp1.9:32.1": "Te mayaṃ vicarissāma, #30",
"snp1.9:32.2": "Gāmā gāmaṃ nagā nagaṃ;",
"snp1.9:32.3": "Namassamānā sambuddhaṃ,",
"snp1.9:32.4": "Dhammassa ca sudhammatan”ti.",
"snp1.9:33.1": "Hemavatasuttaṃ navamaṃ."
}