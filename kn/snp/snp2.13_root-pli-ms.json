{
"snp2.13:1.1": "Sutta Nipāta 2.13",
"snp2.13:2.1": "Sammāparibbājanīyasutta",
"snp2.13:3.1": "“Pucchāmi muniṃ pahūtapaññaṃ,",
"snp2.13:3.2": "Tiṇṇaṃ pāraṅgataṃ parinibbutaṃ ṭhitattaṃ;",
"snp2.13:3.3": "Nikkhamma gharā panujja kāme,",
"snp2.13:3.4": "Kathaṃ bhikkhu sammā so loke paribbajeyya”.",
"snp2.13:4.1": "“Yassa maṅgalā samūhatā, #2",
"snp2.13:4.2": "iti bhagavā",
"snp2.13:4.3": "Uppātā supinā ca lakkhaṇā ca;",
"snp2.13:4.4": "So maṅgaladosavippahīno,",
"snp2.13:4.5": "Sammā so loke paribbajeyya.",
"snp2.13:5.1": "Rāgaṃ vinayetha mānusesu, #3",
"snp2.13:5.2": "Dibbesu kāmesu cāpi bhikkhu;",
"snp2.13:5.3": "Atikkamma bhavaṃ samecca dhammaṃ,",
"snp2.13:5.4": "Sammā so loke paribbajeyya.",
"snp2.13:6.1": "Vipiṭṭhikatvāna pesuṇāni, #4",
"snp2.13:6.2": "Kodhaṃ kadarīyaṃ jaheyya bhikkhu;",
"snp2.13:6.3": "Anurodhavirodhavippahīno,",
"snp2.13:6.4": "Sammā so loke paribbajeyya.",
"snp2.13:7.1": "Hitvāna piyañca appiyañca, #5",
"snp2.13:7.2": "Anupādāya anissito kuhiñci;",
"snp2.13:7.3": "Saṃyojaniyehi vippamutto,",
"snp2.13:7.4": "Sammā so loke paribbajeyya.",
"snp2.13:8.1": "Na so upadhīsu sārameti, #6",
"snp2.13:8.2": "Ādānesu vineyya chandarāgaṃ;",
"snp2.13:8.3": "So anissito anaññaneyyo,",
"snp2.13:8.4": "Sammā so loke paribbajeyya.",
"snp2.13:9.1": "Vacasā manasā ca kammunā ca, #7",
"snp2.13:9.2": "Aviruddho sammā viditvā dhammaṃ;",
"snp2.13:9.3": "Nibbānapadābhipatthayāno,",
"snp2.13:9.4": "Sammā so loke paribbajeyya.",
"snp2.13:10.1": "Yo vandati manti nunnameyya, #8",
"snp2.13:10.2": "Akkuṭṭhopi na sandhiyetha bhikkhu;",
"snp2.13:10.3": "Laddhā parabhojanaṃ na majje,",
"snp2.13:10.4": "Sammā so loke paribbajeyya.",
"snp2.13:11.1": "Lobhañca bhavañca vippahāya, #9",
"snp2.13:11.2": "Virato chedanabandhanā ca bhikkhu;",
"snp2.13:11.3": "So tiṇṇakathaṃkatho visallo,",
"snp2.13:11.4": "Sammā so loke paribbajeyya.",
"snp2.13:12.1": "Sāruppaṃ attano viditvā, #10",
"snp2.13:12.2": "No ca bhikkhu hiṃseyya kañci loke;",
"snp2.13:12.3": "Yathātathiyaṃ viditvā dhammaṃ,",
"snp2.13:12.4": "Sammā so loke paribbajeyya.",
"snp2.13:13.1": "Yassānusayā na santi keci, #11",
"snp2.13:13.2": "Mūlā ca akusalā samūhatāse;",
"snp2.13:13.3": "So nirāso anāsisāno,",
"snp2.13:13.4": "Sammā so loke paribbajeyya.",
"snp2.13:14.1": "Āsavakhīṇo pahīnamāno, #12",
"snp2.13:14.2": "Sabbaṃ rāgapathaṃ upātivatto;",
"snp2.13:14.3": "Danto parinibbuto ṭhitatto,",
"snp2.13:14.4": "Sammā so loke paribbajeyya.",
"snp2.13:15.1": "Saddho sutavā niyāmadassī, #13",
"snp2.13:15.2": "Vaggagatesu na vaggasāri dhīro;",
"snp2.13:15.3": "Lobhaṃ dosaṃ vineyya paṭighaṃ,",
"snp2.13:15.4": "Sammā so loke paribbajeyya.",
"snp2.13:16.1": "Saṃsuddhajino vivaṭṭacchado, #14",
"snp2.13:16.2": "Dhammesu vasī pāragū anejo;",
"snp2.13:16.3": "Saṅkhāranirodhañāṇakusalo,",
"snp2.13:16.4": "Sammā so loke paribbajeyya.",
"snp2.13:17.1": "Atītesu anāgatesu cāpi, #15",
"snp2.13:17.2": "Kappātīto aticcasuddhipañño;",
"snp2.13:17.3": "Sabbāyatanehi vippamutto,",
"snp2.13:17.4": "Sammā so loke paribbajeyya.",
"snp2.13:18.1": "Aññāya padaṃ samecca dhammaṃ, #16",
"snp2.13:18.2": "Vivaṭaṃ disvāna pahānamāsavānaṃ;",
"snp2.13:18.3": "Sabbupadhīnaṃ parikkhayāno,",
"snp2.13:18.4": "Sammā so loke paribbajeyya”.",
"snp2.13:19.1": "“Addhā hi bhagavā tatheva etaṃ, #17",
"snp2.13:19.2": "Yo so evaṃvihārī danto bhikkhu;",
"snp2.13:19.3": "Sabbasaṃyojanayogavītivatto,",
"snp2.13:19.4": "Sammā so loke paribbajeyyā”ti.",
"snp2.13:20.1": "Sammāparibbājanīyasuttaṃ terasamaṃ."
}