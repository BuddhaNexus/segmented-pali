{
"snp5.1:1.1": "Sutta Nipāta 5.1",
"snp5.1:2.1": "Vatthugāthā",
"snp5.1:3.1": "Kosalānaṃ purā rammā, #1",
"snp5.1:3.2": "agamā dakkhiṇāpathaṃ;",
"snp5.1:3.3": "Ākiñcaññaṃ patthayāno,",
"snp5.1:3.4": "brāhmaṇo mantapāragū.",
"snp5.1:4.1": "So assakassa visaye, #2",
"snp5.1:4.2": "aḷakassa samāsane;",
"snp5.1:4.3": "Vasi godhāvarīkūle,",
"snp5.1:4.4": "uñchena ca phalena ca.",
"snp5.1:5.1": "Tasseva upanissāya, #3",
"snp5.1:5.2": "gāmo ca vipulo ahu;",
"snp5.1:5.3": "Tato jātena āyena,",
"snp5.1:5.4": "mahāyaññamakappayi.",
"snp5.1:6.1": "Mahāyaññaṃ yajitvāna, #4",
"snp5.1:6.2": "puna pāvisi assamaṃ;",
"snp5.1:6.3": "Tasmiṃ paṭipaviṭṭhamhi,",
"snp5.1:6.4": "añño āgañchi brāhmaṇo.",
"snp5.1:7.1": "Ugghaṭṭapādo tasito, #5",
"snp5.1:7.2": "paṅkadanto rajassiro;",
"snp5.1:7.3": "So ca naṃ upasaṅkamma,",
"snp5.1:7.4": "satāni pañca yācati.",
"snp5.1:8.1": "Tamenaṃ bāvarī disvā, #6",
"snp5.1:8.2": "āsanena nimantayi;",
"snp5.1:8.3": "Sukhañca kusalaṃ pucchi,",
"snp5.1:8.4": "idaṃ vacanamabravi.",
"snp5.1:9.1": "“Yaṃ kho mama deyyadhammaṃ, #7",
"snp5.1:9.2": "Sabbaṃ visajjitaṃ mayā;",
"snp5.1:9.3": "Anujānāhi me brahme,",
"snp5.1:9.4": "Natthi pañcasatāni me”.",
"snp5.1:10.1": "“Sace me yācamānassa, #8",
"snp5.1:10.2": "bhavaṃ nānupadassati;",
"snp5.1:10.3": "Sattame divase tuyhaṃ,",
"snp5.1:10.4": "muddhā phalatu sattadhā”.",
"snp5.1:11.1": "Abhisaṅkharitvā kuhako, #9",
"snp5.1:11.2": "bheravaṃ so akittayi;",
"snp5.1:11.3": "Tassa taṃ vacanaṃ sutvā,",
"snp5.1:11.4": "bāvarī dukkhito ahu.",
"snp5.1:12.1": "Ussussati anāhāro, #10",
"snp5.1:12.2": "Sokasallasamappito;",
"snp5.1:12.3": "Athopi evaṃ cittassa,",
"snp5.1:12.4": "Jhāne na ramatī mano.",
"snp5.1:13.1": "Utrastaṃ dukkhitaṃ disvā, #11",
"snp5.1:13.2": "Devatā atthakāminī;",
"snp5.1:13.3": "Bāvariṃ upasaṅkamma,",
"snp5.1:13.4": "Idaṃ vacanamabravi.",
"snp5.1:14.1": "“Na so muddhaṃ pajānāti, #12",
"snp5.1:14.2": "Kuhako so dhanatthiko;",
"snp5.1:14.3": "Muddhani muddhapāte vā,",
"snp5.1:14.4": "Ñāṇaṃ tassa na vijjati”.",
"snp5.1:15.1": "“Bhotī carahi jānāsi, #13",
"snp5.1:15.2": "Taṃ me akkhāhi pucchitā;",
"snp5.1:15.3": "Muddhaṃ muddhādhipātañca,",
"snp5.1:15.4": "Taṃ suṇoma vaco tava”.",
"snp5.1:16.1": "“Ahampetaṃ na jānāmi, #14",
"snp5.1:16.2": "Ñāṇamettha na vijjati;",
"snp5.1:16.3": "Muddhani muddhādhipāte ca,",
"snp5.1:16.4": "Jinānaṃ hettha dassanaṃ”.",
"snp5.1:17.1": "“Atha ko carahi jānāti, #15",
"snp5.1:17.2": "Asmiṃ pathavimaṇḍale;",
"snp5.1:17.3": "Muddhaṃ muddhādhipātañca,",
"snp5.1:17.4": "Taṃ me akkhāhi devate”.",
"snp5.1:18.1": "“Purā kapilavatthumhā, #16",
"snp5.1:18.2": "Nikkhanto lokanāyako;",
"snp5.1:18.3": "Apacco okkākarājassa,",
"snp5.1:18.4": "Sakyaputto pabhaṅkaro.",
"snp5.1:19.1": "So hi brāhmaṇa sambuddho, #17",
"snp5.1:19.2": "Sabbadhammāna pāragū;",
"snp5.1:19.3": "Sabbābhiññābalappatto,",
"snp5.1:19.4": "Sabbadhammesu cakkhumā;",
"snp5.1:19.5": "Sabbakammakkhayaṃ patto,",
"snp5.1:19.6": "Vimutto upadhikkhaye.",
"snp5.1:20.1": "Buddho so bhagavā loke, #18",
"snp5.1:20.2": "Dhammaṃ deseti cakkhumā;",
"snp5.1:20.3": "Taṃ tvaṃ gantvāna pucchassu,",
"snp5.1:20.4": "So te taṃ byākarissati”.",
"snp5.1:21.1": "Sambuddhoti vaco sutvā, #19",
"snp5.1:21.2": "Udaggo bāvarī ahu;",
"snp5.1:21.3": "Sokassa tanuko āsi,",
"snp5.1:21.4": "Pītiñca vipulaṃ labhi.",
"snp5.1:22.1": "So bāvarī attamano udaggo, #20",
"snp5.1:22.2": "Taṃ devataṃ pucchati vedajāto;",
"snp5.1:22.3": "“Katamamhi gāme nigamamhi vā pana,",
"snp5.1:22.4": "Katamamhi vā janapade lokanātho;",
"snp5.1:22.5": "Yattha gantvāna passemu,",
"snp5.1:22.6": "Sambuddhaṃ dvipaduttamaṃ”.",
"snp5.1:23.1": "“Sāvatthiyaṃ kosalamandire jino, #21",
"snp5.1:23.2": "Pahūtapañño varabhūrimedhaso;",
"snp5.1:23.3": "So sakyaputto vidhuro anāsavo,",
"snp5.1:23.4": "Muddhādhipātassa vidū narāsabho”.",
"snp5.1:24.1": "Tato āmantayī sisse, #22",
"snp5.1:24.2": "Brāhmaṇe mantapārage;",
"snp5.1:24.3": "“Etha māṇavā akkhissaṃ,",
"snp5.1:24.4": "Suṇātha vacanaṃ mama.",
"snp5.1:25.1": "Yasseso dullabho loke, #23",
"snp5.1:25.2": "Pātubhāvo abhiṇhaso;",
"snp5.1:25.3": "Svājja lokamhi uppanno,",
"snp5.1:25.4": "Sambuddho iti vissuto;",
"snp5.1:25.5": "Khippaṃ gantvāna sāvatthiṃ,",
"snp5.1:25.6": "Passavho dvipaduttamaṃ”.",
"snp5.1:26.1": "“Kathaṃ carahi jānemu, #24",
"snp5.1:26.2": "Disvā buddhoti brāhmaṇa;",
"snp5.1:26.3": "Ajānataṃ no pabrūhi,",
"snp5.1:26.4": "Yathā jānemu taṃ mayaṃ”.",
"snp5.1:27.1": "“Āgatāni hi mantesu, #25",
"snp5.1:27.2": "Mahāpurisalakkhaṇā;",
"snp5.1:27.3": "Dvattiṃsāni ca byākkhātā,",
"snp5.1:27.4": "Samattā anupubbaso.",
"snp5.1:28.1": "Yassete honti gattesu, #26",
"snp5.1:28.2": "Mahāpurisalakkhaṇā;",
"snp5.1:28.3": "Dveyeva tassa gatiyo,",
"snp5.1:28.4": "Tatiyā hi na vijjati.",
"snp5.1:29.1": "Sace agāraṃ āvasati, #27",
"snp5.1:29.2": "Vijeyya pathaviṃ imaṃ;",
"snp5.1:29.3": "Adaṇḍena asatthena,",
"snp5.1:29.4": "Dhammena manusāsati.",
"snp5.1:30.1": "Sace ca so pabbajati, #28",
"snp5.1:30.2": "Agārā anagāriyaṃ;",
"snp5.1:30.3": "Vivaṭṭacchado sambuddho,",
"snp5.1:30.4": "Arahā bhavati anuttaro.",
"snp5.1:31.1": "Jātiṃ gottañca lakkhaṇaṃ, #29",
"snp5.1:31.2": "Mante sisse punāpare;",
"snp5.1:31.3": "Muddhaṃ muddhādhipātañca,",
"snp5.1:31.4": "Manasāyeva pucchatha.",
"snp5.1:32.1": "Anāvaraṇadassāvī, #30",
"snp5.1:32.2": "Yadi buddho bhavissati;",
"snp5.1:32.3": "Manasā pucchite pañhe,",
"snp5.1:32.4": "Vācāya vissajessati”.",
"snp5.1:33.1": "Bāvarissa vaco sutvā, #31",
"snp5.1:33.2": "Sissā soḷasa brāhmaṇā;",
"snp5.1:33.3": "Ajito tissametteyyo,",
"snp5.1:33.4": "Puṇṇako atha mettagū.",
"snp5.1:34.1": "Dhotako upasīvo ca, #32",
"snp5.1:34.2": "Nando ca atha hemako;",
"snp5.1:34.3": "Todeyya-kappā dubhayo,",
"snp5.1:34.4": "Jatukaṇṇī ca paṇḍito.",
"snp5.1:35.1": "Bhadrāvudho udayo ca, #33",
"snp5.1:35.2": "Posālo cāpi brāhmaṇo;",
"snp5.1:35.3": "Mogharājā ca medhāvī,",
"snp5.1:35.4": "Piṅgiyo ca mahāisi.",
"snp5.1:36.1": "Paccekagaṇino sabbe, #34",
"snp5.1:36.2": "Sabbalokassa vissutā;",
"snp5.1:36.3": "Jhāyī jhānaratā dhīrā,",
"snp5.1:36.4": "Pubbavāsanavāsitā.",
"snp5.1:37.1": "Bāvariṃ abhivādetvā, #35",
"snp5.1:37.2": "Katvā ca naṃ padakkhiṇaṃ;",
"snp5.1:37.3": "Jaṭājinadharā sabbe,",
"snp5.1:37.4": "Pakkāmuṃ uttarāmukhā.",
"snp5.1:38.1": "Aḷakassa patiṭṭhānaṃ, #36",
"snp5.1:38.2": "Purimāhissatiṃ tadā;",
"snp5.1:38.3": "Ujjeniñcāpi gonaddhaṃ,",
"snp5.1:38.4": "Vedisaṃ vanasavhayaṃ.",
"snp5.1:39.1": "Kosambiñcāpi sāketaṃ, #37",
"snp5.1:39.2": "Sāvatthiñca puruttamaṃ;",
"snp5.1:39.3": "Setabyaṃ kapilavatthuṃ,",
"snp5.1:39.4": "Kusinārañca mandiraṃ.",
"snp5.1:40.1": "Pāvañca bhoganagaraṃ, #38",
"snp5.1:40.2": "Vesāliṃ māgadhaṃ puraṃ;",
"snp5.1:40.3": "Pāsāṇakaṃ cetiyañca,",
"snp5.1:40.4": "Ramaṇīyaṃ manoramaṃ.",
"snp5.1:41.1": "Tasitovudakaṃ sītaṃ, #39",
"snp5.1:41.2": "Mahālābhaṃva vāṇijo;",
"snp5.1:41.3": "Chāyaṃ ghammābhitattova,",
"snp5.1:41.4": "Turitā pabbatamāruhuṃ.",
"snp5.1:42.1": "Bhagavā tamhi samaye, #40",
"snp5.1:42.2": "Bhikkhusaṅghapurakkhato;",
"snp5.1:42.3": "Bhikkhūnaṃ dhammaṃ deseti,",
"snp5.1:42.4": "Sīhova nadatī vane.",
"snp5.1:43.1": "Ajito addasa buddhaṃ, #41",
"snp5.1:43.2": "Sataraṃsiṃva bhāṇumaṃ;",
"snp5.1:43.3": "Candaṃ yathā pannarase,",
"snp5.1:43.4": "Pāripūriṃ upāgataṃ.",
"snp5.1:44.1": "Athassa gatte disvāna, #42",
"snp5.1:44.2": "Paripūrañca byañjanaṃ;",
"snp5.1:44.3": "Ekamantaṃ ṭhito haṭṭho,",
"snp5.1:44.4": "Manopañhe apucchatha.",
"snp5.1:45.1": "“Ādissa jammanaṃ brūhi, #43",
"snp5.1:45.2": "Gottaṃ brūhi salakkhaṇaṃ;",
"snp5.1:45.3": "Mantesu pāramiṃ brūhi,",
"snp5.1:45.4": "Kati vāceti brāhmaṇo”.",
"snp5.1:46.1": "“Vīsaṃ vassasataṃ āyu, #44",
"snp5.1:46.2": "So ca gottena bāvarī;",
"snp5.1:46.3": "Tīṇissa lakkhaṇā gatte,",
"snp5.1:46.4": "Tiṇṇaṃ vedāna pāragū.",
"snp5.1:47.1": "Lakkhaṇe itihāse ca, #45",
"snp5.1:47.2": "Sanighaṇḍusakeṭubhe;",
"snp5.1:47.3": "Pañcasatāni vāceti,",
"snp5.1:47.4": "Sadhamme pāramiṃ gato”.",
"snp5.1:48.1": "“Lakkhaṇānaṃ pavicayaṃ, #46",
"snp5.1:48.2": "Bāvarissa naruttama;",
"snp5.1:48.3": "Kaṅkhacchida pakāsehi,",
"snp5.1:48.4": "Mā no kaṅkhāyitaṃ ahu”.",
"snp5.1:49.1": "“Mukhaṃ jivhāya chādeti, #47",
"snp5.1:49.2": "Uṇṇassa bhamukantare;",
"snp5.1:49.3": "Kosohitaṃ vatthaguyhaṃ,",
"snp5.1:49.4": "Evaṃ jānāhi māṇava”.",
"snp5.1:50.1": "Pucchañhi kiñci asuṇanto, #48",
"snp5.1:50.2": "Sutvā pañhe viyākate;",
"snp5.1:50.3": "Vicinteti jano sabbo,",
"snp5.1:50.4": "Vedajāto katañjalī.",
"snp5.1:51.1": "“Ko nu devo vā brahmā vā, #49",
"snp5.1:51.2": "Indo vāpi sujampati;",
"snp5.1:51.3": "Manasā pucchite pañhe,",
"snp5.1:51.4": "Kametaṃ paṭibhāsati”.",
"snp5.1:52.1": "“Muddhaṃ muddhādhipātañca, #50",
"snp5.1:52.2": "Bāvarī paripucchati;",
"snp5.1:52.3": "Taṃ byākarohi bhagavā,",
"snp5.1:52.4": "Kaṅkhaṃ vinaya no ise”.",
"snp5.1:53.1": "“Avijjā muddhāti jānāhi, #51",
"snp5.1:53.2": "Vijjā muddhādhipātinī;",
"snp5.1:53.3": "Saddhāsatisamādhīhi,",
"snp5.1:53.4": "Chandaviriyena saṃyutā”.",
"snp5.1:54.1": "Tato vedena mahatā, #52",
"snp5.1:54.2": "Santhambhitvāna māṇavo;",
"snp5.1:54.3": "Ekaṃsaṃ ajinaṃ katvā,",
"snp5.1:54.4": "Pādesu sirasā pati.",
"snp5.1:55.1": "“Bāvarī brāhmaṇo bhoto, #53",
"snp5.1:55.2": "Saha sissehi mārisa;",
"snp5.1:55.3": "Udaggacitto sumano,",
"snp5.1:55.4": "Pāde vandati cakkhuma”.",
"snp5.1:56.1": "“Sukhito bāvarī hotu, #54",
"snp5.1:56.2": "Saha sissehi brāhmaṇo;",
"snp5.1:56.3": "Tvañcāpi sukhito hohi,",
"snp5.1:56.4": "Ciraṃ jīvāhi māṇava.",
"snp5.1:57.1": "Bāvarissa ca tuyhaṃ vā, #55",
"snp5.1:57.2": "Sabbesaṃ sabbasaṃsayaṃ;",
"snp5.1:57.3": "Katāvakāsā pucchavho,",
"snp5.1:57.4": "Yaṃ kiñci manasicchatha”.",
"snp5.1:58.1": "Sambuddhena katokāso, #56",
"snp5.1:58.2": "Nisīditvāna pañjalī;",
"snp5.1:58.3": "Ajito paṭhamaṃ pañhaṃ,",
"snp5.1:58.4": "Tattha pucchi tathāgataṃ.",
"snp5.1:59.1": "Vatthugāthā niṭṭhitā."
}