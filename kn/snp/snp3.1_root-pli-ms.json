{
"snp3.1:1.1": "Sutta Nipāta 3.1",
"snp3.1:2.1": "Pabbajjāsutta",
"snp3.1:3.1": "“Pabbajjaṃ kittayissāmi,",
"snp3.1:3.2": "yathā pabbaji cakkhumā;",
"snp3.1:3.3": "Yathā vīmaṃsamāno so,",
"snp3.1:3.4": "pabbajjaṃ samarocayi.",
"snp3.1:4.1": "Sambādhoyaṃ gharāvāso, #2",
"snp3.1:4.2": "rajassāyatanaṃ iti;",
"snp3.1:4.3": "Abbhokāsova pabbajjā,",
"snp3.1:4.4": "iti disvāna pabbaji.",
"snp3.1:5.1": "Pabbajitvāna kāyena, #3",
"snp3.1:5.2": "pāpakammaṃ vivajjayi;",
"snp3.1:5.3": "Vacīduccaritaṃ hitvā,",
"snp3.1:5.4": "ājīvaṃ parisodhayi.",
"snp3.1:6.1": "Agamā rājagahaṃ buddho, #4",
"snp3.1:6.2": "magadhānaṃ giribbajaṃ;",
"snp3.1:6.3": "Piṇḍāya abhihāresi,",
"snp3.1:6.4": "ākiṇṇavaralakkhaṇo”.",
"snp3.1:7.1": "Tamaddasā bimbisāro, #5",
"snp3.1:7.2": "pāsādasmiṃ patiṭṭhito;",
"snp3.1:7.3": "Disvā lakkhaṇasampannaṃ,",
"snp3.1:7.4": "imamatthaṃ abhāsatha.",
"snp3.1:8.1": "“Imaṃ bhonto nisāmetha, #6",
"snp3.1:8.2": "abhirūpo brahā suci;",
"snp3.1:8.3": "Caraṇena ca sampanno,",
"snp3.1:8.4": "yugamattañca pekkhati.",
"snp3.1:9.1": "Okkhittacakkhu satimā, #7",
"snp3.1:9.2": "nāyaṃ nīcakulāmiva;",
"snp3.1:9.3": "Rājadūtābhidhāvantu,",
"snp3.1:9.4": "kuhiṃ bhikkhu gamissati”.",
"snp3.1:10.1": "Te pesitā rājadūtā, #8",
"snp3.1:10.2": "piṭṭhito anubandhisuṃ;",
"snp3.1:10.3": "Kuhiṃ gamissati bhikkhu,",
"snp3.1:10.4": "kattha vāso bhavissati.",
"snp3.1:11.1": "Sapadānaṃ caramāno, #9",
"snp3.1:11.2": "guttadvāro susaṃvuto;",
"snp3.1:11.3": "Khippaṃ pattaṃ apūresi,",
"snp3.1:11.4": "sampajāno paṭissato.",
"snp3.1:12.1": "Piṇḍacāraṃ caritvāna, #10",
"snp3.1:12.2": "Nikkhamma nagarā muni;",
"snp3.1:12.3": "Paṇḍavaṃ abhihāresi,",
"snp3.1:12.4": "Ettha vāso bhavissati.",
"snp3.1:13.1": "Disvāna vāsūpagataṃ, #11",
"snp3.1:13.2": "Tayo dūtā upāvisuṃ;",
"snp3.1:13.3": "Tesu ekova āgantvā,",
"snp3.1:13.4": "Rājino paṭivedayi.",
"snp3.1:14.1": "“Esa bhikkhu mahārāja, #12",
"snp3.1:14.2": "Paṇḍavassa puratthato;",
"snp3.1:14.3": "Nisinno byagghusabhova,",
"snp3.1:14.4": "Sīhova girigabbhare”.",
"snp3.1:15.1": "Sutvāna dūtavacanaṃ, #13",
"snp3.1:15.2": "Bhaddayānena khattiyo;",
"snp3.1:15.3": "Taramānarūpo niyyāsi,",
"snp3.1:15.4": "Yena paṇḍavapabbato.",
"snp3.1:16.1": "Sa yānabhūmiṃ yāyitvā, #14",
"snp3.1:16.2": "Yānā oruyha khattiyo;",
"snp3.1:16.3": "Pattiko upasaṅkamma,",
"snp3.1:16.4": "Āsajja naṃ upāvisi.",
"snp3.1:17.1": "Nisajja rājā sammodi, #15",
"snp3.1:17.2": "Kathaṃ sāraṇīyaṃ tato;",
"snp3.1:17.3": "Kathaṃ so vītisāretvā,",
"snp3.1:17.4": "Imamatthaṃ abhāsatha.",
"snp3.1:18.1": "“Yuvā ca daharo cāsi, #16",
"snp3.1:18.2": "Paṭhamuppattiko susu;",
"snp3.1:18.3": "Vaṇṇārohena sampanno,",
"snp3.1:18.4": "Jātimā viya khattiyo.",
"snp3.1:19.1": "Sobhayanto anīkaggaṃ, #17",
"snp3.1:19.2": "Nāgasaṅghapurakkhato;",
"snp3.1:19.3": "Dadāmi bhoge bhuñjassu,",
"snp3.1:19.4": "Jātiṃ akkhāhi pucchito”.",
"snp3.1:20.1": "“Ujuṃ janapado rāja, #18",
"snp3.1:20.2": "Himavantassa passato;",
"snp3.1:20.3": "Dhanaviriyena sampanno,",
"snp3.1:20.4": "Kosalesu niketino.",
"snp3.1:21.1": "Ādiccā nāma gottena, #19",
"snp3.1:21.2": "Sākiyā nāma jātiyā;",
"snp3.1:21.3": "Tamhā kulā pabbajitomhi,",
"snp3.1:21.4": "Na kāme abhipatthayaṃ.",
"snp3.1:22.1": "Kāmesvādīnavaṃ disvā, #20",
"snp3.1:22.2": "Nekkhammaṃ daṭṭhu khemato;",
"snp3.1:22.3": "Padhānāya gamissāmi,",
"snp3.1:22.4": "Ettha me rañjatī mano”ti.",
"snp3.1:23.1": "Pabbajjāsuttaṃ paṭhamaṃ."
}