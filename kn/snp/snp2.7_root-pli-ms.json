{
"snp2.7:1.1": "Sutta Nipāta 2.7",
"snp2.7:2.1": "Brāhmaṇadhammikasutta",
"snp2.7:3.1": "Evaṃ me sutaṃ—",
"snp2.7:3.2": "ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
"snp2.7:3.3": "Atha kho sambahulā kosalakā brāhmaṇamahāsālā jiṇṇā vuḍḍhā mahallakā addhagatā vayoanuppattā yena bhagavā tenupasaṅkamiṃsu;",
"snp2.7:3.4": "upasaṅkamitvā bhagavatā saddhiṃ sammodiṃsu.",
"snp2.7:3.5": "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdiṃsu.",
"snp2.7:3.6": "Ekamantaṃ nisinnā kho te brāhmaṇamahāsālā bhagavantaṃ etadavocuṃ:",
"snp2.7:3.7": "“sandissanti nu kho, bho gotama, etarahi brāhmaṇā porāṇānaṃ brāhmaṇānaṃ brāhmaṇadhamme”ti?",
"snp2.7:3.8": "“Na kho, brāhmaṇā, sandissanti etarahi brāhmaṇā porāṇānaṃ brāhmaṇānaṃ brāhmaṇadhamme”ti.",
"snp2.7:3.9": "“Sādhu no bhavaṃ gotamo porāṇānaṃ brāhmaṇānaṃ brāhmaṇadhammaṃ bhāsatu, sace bhoto gotamassa agarū”ti.",
"snp2.7:3.10": "“Tena hi, brāhmaṇā, suṇātha, sādhukaṃ manasi karotha, bhāsissāmī”ti.",
"snp2.7:3.11": "“Evaṃ, bho”ti kho te brāhmaṇamahāsālā bhagavato paccassosuṃ.",
"snp2.7:3.12": "Bhagavā etadavoca:",
"snp2.7:4.1": "“Isayo pubbakā āsuṃ,",
"snp2.7:4.2": "saññatattā tapassino;",
"snp2.7:4.3": "Pañca kāmaguṇe hitvā,",
"snp2.7:4.4": "attadatthamacārisuṃ.",
"snp2.7:5.1": "Na pasū brāhmaṇānāsuṃ, #2",
"snp2.7:5.2": "na hiraññaṃ na dhāniyaṃ;",
"snp2.7:5.3": "Sajjhāyadhanadhaññāsuṃ,",
"snp2.7:5.4": "brahmaṃ nidhimapālayuṃ.",
"snp2.7:6.1": "Yaṃ nesaṃ pakataṃ āsi, #3",
"snp2.7:6.2": "dvārabhattaṃ upaṭṭhitaṃ;",
"snp2.7:6.3": "Saddhāpakatamesānaṃ,",
"snp2.7:6.4": "dātave tadamaññisuṃ.",
"snp2.7:7.1": "Nānārattehi vatthehi, #4",
"snp2.7:7.2": "sayanehāvasathehi ca;",
"snp2.7:7.3": "Phītā janapadā raṭṭhā,",
"snp2.7:7.4": "te namassiṃsu brāhmaṇe.",
"snp2.7:8.1": "Avajjhā brāhmaṇā āsuṃ, #5",
"snp2.7:8.2": "ajeyyā dhammarakkhitā;",
"snp2.7:8.3": "Na ne koci nivāresi,",
"snp2.7:8.4": "kuladvāresu sabbaso.",
"snp2.7:9.1": "Aṭṭhacattālīsaṃ vassāni, #6",
"snp2.7:9.2": "(komāra) Brahmacariyaṃ cariṃsu te;",
"snp2.7:9.3": "Vijjācaraṇapariyeṭṭhiṃ,",
"snp2.7:9.4": "Acaruṃ brāhmaṇā pure.",
"snp2.7:10.1": "Na brāhmaṇā aññamagamuṃ, #7",
"snp2.7:10.2": "napi bhariyaṃ kiṇiṃsu te;",
"snp2.7:10.3": "Sampiyeneva saṃvāsaṃ,",
"snp2.7:10.4": "saṅgantvā samarocayuṃ.",
"snp2.7:11.1": "Aññatra tamhā samayā, #8",
"snp2.7:11.2": "utuveramaṇiṃ pati;",
"snp2.7:11.3": "Antarā methunaṃ dhammaṃ,",
"snp2.7:11.4": "nāssu gacchanti brāhmaṇā.",
"snp2.7:12.1": "Brahmacariyañca sīlañca, #9",
"snp2.7:12.2": "ajjavaṃ maddavaṃ tapaṃ;",
"snp2.7:12.3": "Soraccaṃ avihiṃsañca,",
"snp2.7:12.4": "khantiñcāpi avaṇṇayuṃ.",
"snp2.7:13.1": "Yo nesaṃ paramo āsi, #10",
"snp2.7:13.2": "Brahmā daḷhaparakkamo;",
"snp2.7:13.3": "Sa vāpi methunaṃ dhammaṃ,",
"snp2.7:13.4": "Supinantepi nāgamā.",
"snp2.7:14.1": "Tassa vattamanusikkhantā, #11",
"snp2.7:14.2": "Idheke viññujātikā;",
"snp2.7:14.3": "Brahmacariyañca sīlañca,",
"snp2.7:14.4": "Khantiñcāpi avaṇṇayuṃ.",
"snp2.7:15.1": "Taṇḍulaṃ sayanaṃ vatthaṃ, #12",
"snp2.7:15.2": "Sappitelañca yāciya;",
"snp2.7:15.3": "Dhammena samodhānetvā,",
"snp2.7:15.4": "Tato yaññamakappayuṃ.",
"snp2.7:16.1": "Upaṭṭhitasmiṃ yaññasmiṃ, #13",
"snp2.7:16.2": "Nāssu gāvo haniṃsu te;",
"snp2.7:16.3": "Yathā mātā pitā bhātā,",
"snp2.7:16.4": "Aññe vāpi ca ñātakā;",
"snp2.7:16.5": "Gāvo no paramā mittā,",
"snp2.7:16.6": "Yāsu jāyanti osadhā.",
"snp2.7:17.1": "Annadā baladā cetā, #14",
"snp2.7:17.2": "Vaṇṇadā sukhadā tathā;",
"snp2.7:17.3": "Etamatthavasaṃ ñatvā,",
"snp2.7:17.4": "Nāssu gāvo haniṃsu te.",
"snp2.7:18.1": "Sukhumālā mahākāyā, #15",
"snp2.7:18.2": "Vaṇṇavanto yasassino;",
"snp2.7:18.3": "Brāhmaṇā sehi dhammehi,",
"snp2.7:18.4": "Kiccākiccesu ussukā;",
"snp2.7:18.5": "Yāva loke avattiṃsu,",
"snp2.7:18.6": "Sukhamedhitthayaṃ pajā.",
"snp2.7:19.1": "Tesaṃ āsi vipallāso, #16",
"snp2.7:19.2": "Disvāna aṇuto aṇuṃ;",
"snp2.7:19.3": "Rājino ca viyākāraṃ,",
"snp2.7:19.4": "Nāriyo samalaṅkatā.",
"snp2.7:20.1": "Rathe cājaññasaṃyutte, #17",
"snp2.7:20.2": "Sukate cittasibbane;",
"snp2.7:20.3": "Nivesane nivese ca,",
"snp2.7:20.4": "Vibhatte bhāgaso mite.",
"snp2.7:21.1": "Gomaṇḍalaparibyūḷhaṃ, #18",
"snp2.7:21.2": "Nārīvaragaṇāyutaṃ;",
"snp2.7:21.3": "Uḷāraṃ mānusaṃ bhogaṃ,",
"snp2.7:21.4": "Abhijjhāyiṃsu brāhmaṇā.",
"snp2.7:22.1": "Te tattha mante ganthetvā, #19",
"snp2.7:22.2": "Okkākaṃ tadupāgamuṃ;",
"snp2.7:22.3": "Pahūtadhanadhaññosi,",
"snp2.7:22.4": "Yajassu bahu te vittaṃ;",
"snp2.7:22.5": "Yajassu bahu te dhanaṃ.",
"snp2.7:23.1": "Tato ca rājā saññatto, #20",
"snp2.7:23.2": "Brāhmaṇehi rathesabho;",
"snp2.7:23.3": "Assamedhaṃ purisamedhaṃ,",
"snp2.7:23.4": "Sammāpāsaṃ vājapeyyaṃ niraggaḷaṃ;",
"snp2.7:23.5": "Ete yāge yajitvāna,",
"snp2.7:23.6": "Brāhmaṇānamadā dhanaṃ.",
"snp2.7:24.1": "Gāvo sayanañca vatthañca, #21",
"snp2.7:24.2": "Nāriyo samalaṅkatā;",
"snp2.7:24.3": "Rathe cājaññasaṃyutte,",
"snp2.7:24.4": "Sukate cittasibbane.",
"snp2.7:25.1": "Nivesanāni rammāni, #22",
"snp2.7:25.2": "Suvibhattāni bhāgaso;",
"snp2.7:25.3": "Nānādhaññassa pūretvā,",
"snp2.7:25.4": "Brāhmaṇānamadā dhanaṃ.",
"snp2.7:26.1": "Te ca tattha dhanaṃ laddhā, #23",
"snp2.7:26.2": "Sannidhiṃ samarocayuṃ;",
"snp2.7:26.3": "Tesaṃ icchāvatiṇṇānaṃ,",
"snp2.7:26.4": "Bhiyyo taṇhā pavaḍḍhatha;",
"snp2.7:26.5": "Te tattha mante ganthetvā,",
"snp2.7:26.6": "Okkākaṃ puna mupāgamuṃ.",
"snp2.7:27.1": "Yathā āpo ca pathavī ca, #24",
"snp2.7:27.2": "Hiraññaṃ dhanadhāniyaṃ;",
"snp2.7:27.3": "Evaṃ gāvo manussānaṃ,",
"snp2.7:27.4": "Parikkhāro so hi pāṇinaṃ;",
"snp2.7:27.5": "Yajassu bahu te vittaṃ,",
"snp2.7:27.6": "Yajassu bahu te dhanaṃ.",
"snp2.7:28.1": "Tato ca rājā saññatto, #25",
"snp2.7:28.2": "Brāhmaṇehi rathesabho;",
"snp2.7:28.3": "Nekā satasahassiyo,",
"snp2.7:28.4": "Gāvo yaññe aghātayi.",
"snp2.7:29.1": "Na pādā na visāṇena, #26",
"snp2.7:29.2": "Nāssu hiṃsanti kenaci;",
"snp2.7:29.3": "Gāvo eḷakasamānā,",
"snp2.7:29.4": "Soratā kumbhadūhanā;",
"snp2.7:29.5": "Tā visāṇe gahetvāna,",
"snp2.7:29.6": "Rājā satthena ghātayi.",
"snp2.7:30.1": "Tato devā pitaro ca, #27",
"snp2.7:30.2": "Indo asurarakkhasā;",
"snp2.7:30.3": "Adhammo iti pakkanduṃ,",
"snp2.7:30.4": "Yaṃ satthaṃ nipatī gave.",
"snp2.7:31.1": "Tayo rogā pure āsuṃ, #28",
"snp2.7:31.2": "Icchā anasanaṃ jarā;",
"snp2.7:31.3": "Pasūnañca samārambhā,",
"snp2.7:31.4": "Aṭṭhānavutimāgamuṃ.",
"snp2.7:32.1": "Eso adhammo daṇḍānaṃ, #29",
"snp2.7:32.2": "Okkanto purāṇo ahu;",
"snp2.7:32.3": "Adūsikāyo haññanti,",
"snp2.7:32.4": "Dhammā dhaṃsanti yājakā.",
"snp2.7:33.1": "Evameso aṇudhammo, #30",
"snp2.7:33.2": "Porāṇo viññugarahito;",
"snp2.7:33.3": "Yattha edisakaṃ passati,",
"snp2.7:33.4": "Yājakaṃ garahatī jano.",
"snp2.7:34.1": "Evaṃ dhamme viyāpanne, #31",
"snp2.7:34.2": "Vibhinnā suddavessikā;",
"snp2.7:34.3": "Puthū vibhinnā khattiyā,",
"snp2.7:34.4": "Patiṃ bhariyāvamaññatha.",
"snp2.7:35.1": "Khattiyā brahmabandhū ca, #32",
"snp2.7:35.2": "Ye caññe gottarakkhitā;",
"snp2.7:35.3": "Jātivādaṃ nirākatvā,",
"snp2.7:35.4": "Kāmānaṃ vasamanvagun”ti.",
"snp2.7:36.1": "Evaṃ vutte, te brāhmaṇamahāsālā bhagavantaṃ etadavocuṃ:",
"snp2.7:36.2": "“abhikkantaṃ, bho gotama … pe …",
"snp2.7:36.4": "upāsake no bhavaṃ gotamo dhāretu ajjatagge pāṇupete saraṇaṃ gate”ti.",
"snp2.7:37.1": "Brāhmaṇadhammikasuttaṃ sattamaṃ."
}