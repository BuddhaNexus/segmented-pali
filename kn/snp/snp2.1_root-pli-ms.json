{
"snp2.1:1.1": "Sutta Nipāta 2.1",
"snp2.1:2.1": "Ratanasutta",
"snp2.1:3.1": "Yānīdha bhūtāni samāgatāni,",
"snp2.1:3.2": "Bhummāni vā yāni va antalikkhe;",
"snp2.1:3.3": "Sabbeva bhūtā sumanā bhavantu,",
"snp2.1:3.4": "Athopi sakkacca suṇantu bhāsitaṃ.",
"snp2.1:4.1": "Tasmā hi bhūtā nisāmetha sabbe, #2",
"snp2.1:4.2": "Mettaṃ karotha mānusiyā pajāya;",
"snp2.1:4.3": "Divā ca ratto ca haranti ye baliṃ,",
"snp2.1:4.4": "Tasmā hi ne rakkhatha appamattā.",
"snp2.1:5.1": "Yaṃ kiñci vittaṃ idha vā huraṃ vā, #3",
"snp2.1:5.2": "Saggesu vā yaṃ ratanaṃ paṇītaṃ;",
"snp2.1:5.3": "Na no samaṃ atthi tathāgatena,",
"snp2.1:5.4": "Idampi buddhe ratanaṃ paṇītaṃ;",
"snp2.1:5.5": "Etena saccena suvatthi hotu.",
"snp2.1:6.1": "Khayaṃ virāgaṃ amataṃ paṇītaṃ, #4",
"snp2.1:6.2": "Yadajjhagā sakyamunī samāhito;",
"snp2.1:6.3": "Na tena dhammena samatthi kiñci,",
"snp2.1:6.4": "Idampi dhamme ratanaṃ paṇītaṃ;",
"snp2.1:6.5": "Etena saccena suvatthi hotu.",
"snp2.1:7.1": "Yaṃ buddhaseṭṭho parivaṇṇayī suciṃ, #5",
"snp2.1:7.2": "Samādhimānantarikaññamāhu;",
"snp2.1:7.3": "Samādhinā tena samo na vijjati,",
"snp2.1:7.4": "Idampi dhamme ratanaṃ paṇītaṃ;",
"snp2.1:7.5": "Etena saccena suvatthi hotu.",
"snp2.1:8.1": "Ye puggalā aṭṭha sataṃ pasatthā, #6",
"snp2.1:8.2": "Cattāri etāni yugāni honti;",
"snp2.1:8.3": "Te dakkhiṇeyyā sugatassa sāvakā,",
"snp2.1:8.4": "Etesu dinnāni mahapphalāni;",
"snp2.1:8.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"snp2.1:8.6": "Etena saccena suvatthi hotu.",
"snp2.1:9.1": "Ye suppayuttā manasā daḷhena, #7",
"snp2.1:9.2": "Nikkāmino gotamasāsanamhi;",
"snp2.1:9.3": "Te pattipattā amataṃ vigayha,",
"snp2.1:9.4": "Laddhā mudhā nibbutiṃ bhuñjamānā;",
"snp2.1:9.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"snp2.1:9.6": "Etena saccena suvatthi hotu.",
"snp2.1:10.1": "Yathindakhīlo pathavissito siyā, #8",
"snp2.1:10.2": "Catubbhi vātehi asampakampiyo;",
"snp2.1:10.3": "Tathūpamaṃ sappurisaṃ vadāmi,",
"snp2.1:10.4": "Yo ariyasaccāni avecca passati;",
"snp2.1:10.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"snp2.1:10.6": "Etena saccena suvatthi hotu.",
"snp2.1:11.1": "Ye ariyasaccāni vibhāvayanti, #9",
"snp2.1:11.2": "Gambhīrapaññena sudesitāni;",
"snp2.1:11.3": "Kiñcāpi te honti bhusaṃ pamattā,",
"snp2.1:11.4": "Na te bhavaṃ aṭṭhamamādiyanti;",
"snp2.1:11.5": "Idampi saṅghe ratanaṃ paṇītaṃ,",
"snp2.1:11.6": "Etena saccena suvatthi hotu.",
"snp2.1:12.1": "Sahāvassa dassanasampadāya, #10",
"snp2.1:12.2": "Tayassu dhammā jahitā bhavanti;",
"snp2.1:12.3": "Sakkāyadiṭṭhī vicikicchitañca,",
"snp2.1:12.4": "Sīlabbataṃ vāpi yadatthi kiñci.",
"snp2.1:13.1": "Catūhapāyehi ca vippamutto, #11",
"snp2.1:13.2": "Chaccābhiṭhānāni abhabba kātuṃ;",
"snp2.1:13.3": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"snp2.1:13.4": "Etena saccena suvatthi hotu.",
"snp2.1:14.1": "Kiñcāpi so kamma karoti pāpakaṃ, #12",
"snp2.1:14.2": "Kāyena vācā uda cetasā vā;",
"snp2.1:14.3": "Abhabba so tassa paṭicchadāya,",
"snp2.1:14.4": "Abhabbatā diṭṭhapadassa vuttā;",
"snp2.1:14.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"snp2.1:14.6": "Etena saccena suvatthi hotu.",
"snp2.1:15.1": "Vanappagumbe yatha phussitagge, #13",
"snp2.1:15.2": "Gimhānamāse paṭhamasmiṃ gimhe;",
"snp2.1:15.3": "Tathūpamaṃ dhammavaraṃ adesayi,",
"snp2.1:15.4": "Nibbānagāmiṃ paramaṃ hitāya;",
"snp2.1:15.5": "Idampi buddhe ratanaṃ paṇītaṃ,",
"snp2.1:15.6": "Etena saccena suvatthi hotu.",
"snp2.1:16.1": "Varo varaññū varado varāharo, #14",
"snp2.1:16.2": "Anuttaro dhammavaraṃ adesayi;",
"snp2.1:16.3": "Idampi buddhe ratanaṃ paṇītaṃ,",
"snp2.1:16.4": "Etena saccena suvatthi hotu.",
"snp2.1:17.1": "Khīṇaṃ purāṇaṃ nava natthi sambhavaṃ, #15",
"snp2.1:17.2": "Virattacittāyatike bhavasmiṃ;",
"snp2.1:17.3": "Te khīṇabījā avirūḷhichandā,",
"snp2.1:17.4": "Nibbanti dhīrā yathāyaṃ padīpo;",
"snp2.1:17.5": "Idampi saṃghe ratanaṃ paṇītaṃ,",
"snp2.1:17.6": "Etena saccena suvatthi hotu.",
"snp2.1:18.1": "Yānīdha bhūtāni samāgatāni, #16",
"snp2.1:18.2": "Bhummāni vā yāni va antalikkhe;",
"snp2.1:18.3": "Tathāgataṃ devamanussapūjitaṃ,",
"snp2.1:18.4": "Buddhaṃ namassāma suvatthi hotu.",
"snp2.1:19.1": "Yānīdha bhūtāni samāgatāni, #17",
"snp2.1:19.2": "Bhummāni vā yāni va antalikkhe;",
"snp2.1:19.3": "Tathāgataṃ devamanussapūjitaṃ,",
"snp2.1:19.4": "Dhammaṃ namassāma suvatthi hotu.",
"snp2.1:20.1": "Yānīdha bhūtāni samāgatāni, #18",
"snp2.1:20.2": "Bhummāni vā yāni va antalikkhe;",
"snp2.1:20.3": "Tathāgataṃ devamanussapūjitaṃ,",
"snp2.1:20.4": "Saṅghaṃ namassāma suvatthi hotūti.",
"snp2.1:21.1": "Ratanasuttaṃ paṭhamaṃ."
}