{
"snp1.8:1.1": "Sutta Nipāta 1.8",
"snp1.8:2.1": "Mettasutta",
"snp1.8:3.1": "“Karaṇīyamatthakusalena,",
"snp1.8:3.2": "Yanta santaṃ padaṃ abhisamecca;",
"snp1.8:3.3": "Sakko ujū ca suhujū ca,",
"snp1.8:3.4": "Sūvaco cassa mudu anatimānī.",
"snp1.8:4.1": "Santussako ca subharo ca, #2",
"snp1.8:4.2": "Appakicco ca sallahukavutti;",
"snp1.8:4.3": "Santindriyo ca nipako ca,",
"snp1.8:4.4": "Appagabbho kulesvananugiddho.",
"snp1.8:5.1": "Na ca khuddamācare kiñci, #3",
"snp1.8:5.2": "Yena viññū pare upavadeyyuṃ;",
"snp1.8:5.3": "Sukhino va khemino hontu,",
"snp1.8:5.4": "Sabbasattā bhavantu sukhitattā.",
"snp1.8:6.1": "Ye keci pāṇabhūtatthi, #4",
"snp1.8:6.2": "Tasā vā thāvarā vanavasesā;",
"snp1.8:6.3": "Dīghā vā ye va mahantā,",
"snp1.8:6.4": "Majjhimā rassakā aṇukathūlā.",
"snp1.8:7.1": "Diṭṭhā vā ye va adiṭṭhā, #5",
"snp1.8:7.2": "Ye va dūre vasanti avidūre;",
"snp1.8:7.3": "Bhūtā va sambhavesī va,",
"snp1.8:7.4": "Sabbasattā bhavantu sukhitattā.",
"snp1.8:8.1": "Na paro paraṃ nikubbetha, #6",
"snp1.8:8.2": "Nātimaññetha katthaci na kañci;",
"snp1.8:8.3": "Byārosanā paṭighasañña,",
"snp1.8:8.4": "Nāññamaññassa dukkhamiccheyya.",
"snp1.8:9.1": "Mātā yathā niyaṃputta—​",
"snp1.8:9.2": " #7",
"snp1.8:9.3": "Māyusā ekaputtamanurakkhe;",
"snp1.8:9.4": "Evampi sabbabhūtesu,",
"snp1.8:9.5": "Mānasaṃ bhāvaye aparimāṇaṃ.",
"snp1.8:10.1": "Mettañca sabbalokasmi, #8",
"snp1.8:10.2": "Mānasaṃ bhāvaye aparimāṇaṃ;",
"snp1.8:10.3": "Uddhaṃ adho ca tiriyañca,",
"snp1.8:10.4": "Asambādhaṃ averamasapattaṃ.",
"snp1.8:11.1": "Tiṭṭhaṃ caraṃ nisinno va, #9",
"snp1.8:11.2": "Sayāno yāvatāssa vitamiddho;",
"snp1.8:11.3": "Etaṃ satiṃ adhiṭṭheyya,",
"snp1.8:11.4": "Brahmametaṃ vihāramidhamāhu.",
"snp1.8:12.1": "Diṭṭhiñca anupaggamma, #10",
"snp1.8:12.2": "Sīlavā dassanena sampanno;",
"snp1.8:12.3": "Kāmesu vinaya gedhaṃ,",
"snp1.8:12.4": "Na hi jātuggabbhaseyya punaretī”ti.",
"snp1.8:13.1": "Mettasuttaṃ aṭṭhamaṃ."
}