{
"snp1.2:1.1": "Sutta Nipāta 1.2",
"snp1.2:2.1": "Dhaniyasutta",
"snp1.2:3.1": "“Pakkodano duddhakhīrohamasmi,",
"snp1.2:3.2": "iti dhaniyo gopo",
"snp1.2:3.3": "Anutīre mahiyā samānavāso;",
"snp1.2:3.4": "Channā kuṭi āhito gini,",
"snp1.2:3.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:4.1": "“Akkodhano vigatakhilohamasmi, #2",
"snp1.2:4.2": "iti bhagavā",
"snp1.2:4.3": "Anutīre mahiyekarattivāso;",
"snp1.2:4.4": "Vivaṭā kuṭi nibbuto gini,",
"snp1.2:4.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:5.1": "“Andhakamakasā na vijjare, #3",
"snp1.2:5.2": "iti dhaniyo gopo",
"snp1.2:5.3": "Kacche rūḷhatiṇe caranti gāvo;",
"snp1.2:5.4": "Vuṭṭhimpi saheyyumāgataṃ,",
"snp1.2:5.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:6.1": "“Baddhāsi bhisī susaṅkhatā, #4",
"snp1.2:6.2": "iti bhagavā",
"snp1.2:6.3": "Tiṇṇo pāragato vineyya oghaṃ;",
"snp1.2:6.4": "Attho bhisiyā na vijjati,",
"snp1.2:6.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:7.1": "“Gopī mama assavā alolā, #5",
"snp1.2:7.2": "iti dhaniyo gopo",
"snp1.2:7.3": "Dīgharattaṃ saṃvāsiyā manāpā;",
"snp1.2:7.4": "Tassā na suṇāmi kiñci pāpaṃ,",
"snp1.2:7.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:8.1": "“Cittaṃ mama assavaṃ vimuttaṃ, #6",
"snp1.2:8.2": "iti bhagavā",
"snp1.2:8.3": "Dīgharattaṃ paribhāvitaṃ sudantaṃ;",
"snp1.2:8.4": "Pāpaṃ pana me na vijjati,",
"snp1.2:8.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:9.1": "“Attavetanabhatohamasmi, #7",
"snp1.2:9.2": "iti dhaniyo gopo",
"snp1.2:9.3": "Puttā ca me samāniyā arogā;",
"snp1.2:9.4": "Tesaṃ na suṇāmi kiñci pāpaṃ,",
"snp1.2:9.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:10.1": "“Nāhaṃ bhatakosmi kassaci, #8",
"snp1.2:10.2": "iti bhagavā",
"snp1.2:10.3": "Nibbiṭṭhena carāmi sabbaloke;",
"snp1.2:10.4": "Attho bhatiyā na vijjati,",
"snp1.2:10.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:11.1": "“Atthi vasā atthi dhenupā, #9",
"snp1.2:11.2": "iti dhaniyo gopo",
"snp1.2:11.3": "Godharaṇiyo paveṇiyopi atthi;",
"snp1.2:11.4": "Usabhopi gavampatīdha atthi,",
"snp1.2:11.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:12.1": "“Natthi vasā natthi dhenupā, #10",
"snp1.2:12.2": "iti bhagavā",
"snp1.2:12.3": "Godharaṇiyo paveṇiyopi natthi;",
"snp1.2:12.4": "Usabhopi gavampatīdha natthi,",
"snp1.2:12.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:13.1": "“Khilā nikhātā asampavedhī, #11",
"snp1.2:13.2": "iti dhaniyo gopo",
"snp1.2:13.3": "Dāmā muñjamayā navā susaṇṭhānā;",
"snp1.2:13.4": "Na hi sakkhinti dhenupāpi chettuṃ,",
"snp1.2:13.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:14.1": "“Usabhoriva chetva bandhanāni, #12",
"snp1.2:14.2": "iti bhagavā",
"snp1.2:14.3": "Nāgo pūtilataṃva dālayitvā;",
"snp1.2:14.4": "Nāhaṃ punupessaṃ gabbhaseyyaṃ,",
"snp1.2:14.5": "Atha ce patthayasī pavassa deva”.",
"snp1.2:15.1": "Ninnañca thalañca pūrayanto, #13",
"snp1.2:15.2": "Mahāmegho pavassi tāvadeva;",
"snp1.2:15.3": "Sutvā devassa vassato,",
"snp1.2:15.4": "Imamatthaṃ dhaniyo abhāsatha.",
"snp1.2:16.1": "“Lābhā vata no anappakā, #14",
"snp1.2:16.2": "Ye mayaṃ bhagavantaṃ addasāma;",
"snp1.2:16.3": "Saraṇaṃ taṃ upema cakkhuma,",
"snp1.2:16.4": "Satthā no hohi tuvaṃ mahāmuni.",
"snp1.2:17.1": "Gopī ca ahañca assavā, #15",
"snp1.2:17.2": "Brahmacariyaṃ sugate carāmase;",
"snp1.2:17.3": "Jātimaraṇassa pāragū,",
"snp1.2:17.4": "Dukkhassantakarā bhavāmase”.",
"snp1.2:18.1": "“Nandati puttehi puttimā, #16",
"snp1.2:18.2": "iti māro pāpimā",
"snp1.2:18.3": "Gomā gohi tatheva nandati;",
"snp1.2:18.4": "Upadhī hi narassa nandanā,",
"snp1.2:18.5": "Na hi so nandati yo nirūpadhi”.",
"snp1.2:19.1": "“Socati puttehi puttimā, #17",
"snp1.2:19.2": "iti bhagavā",
"snp1.2:19.3": "Gomā gohi tatheva socati;",
"snp1.2:19.4": "Upadhī hi narassa socanā,",
"snp1.2:19.5": "Na hi so socati yo nirūpadhī”ti.",
"snp1.2:20.1": "Dhaniyasuttaṃ dutiyaṃ."
}