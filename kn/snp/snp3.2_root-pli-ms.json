{
"snp3.2:1.1": "Sutta Nipāta 3.2",
"snp3.2:2.1": "Padhānasutta",
"snp3.2:3.1": "“Taṃ maṃ padhānapahitattaṃ,",
"snp3.2:3.2": "nadiṃ nerañjaraṃ pati;",
"snp3.2:3.3": "Viparakkamma jhāyantaṃ,",
"snp3.2:3.4": "yogakkhemassa pattiyā.",
"snp3.2:4.1": "Namucī karuṇaṃ vācaṃ,",
"snp3.2:4.2": "bhāsamāno upāgami;",
"snp3.2:4.3": "‘Kiso tvamasi dubbaṇṇo,",
"snp3.2:4.4": "santike maraṇaṃ tava.",
"snp3.2:5.1": "Sahassabhāgo maraṇassa,",
"snp3.2:5.2": "ekaṃso tava jīvitaṃ;",
"snp3.2:5.3": "Jīva bho jīvitaṃ seyyo,",
"snp3.2:5.4": "jīvaṃ puññāni kāhasi.",
"snp3.2:6.1": "Carato ca te brahmacariyaṃ,",
"snp3.2:6.2": "Aggihuttañca jūhato;",
"snp3.2:6.3": "Pahūtaṃ cīyate puññaṃ,",
"snp3.2:6.4": "Kiṃ padhānena kāhasi.",
"snp3.2:7.1": "Duggo maggo padhānāya,",
"snp3.2:7.2": "dukkaro durabhisambhavo’”;",
"snp3.2:7.3": "Imā gāthā bhaṇaṃ māro,",
"snp3.2:7.4": "aṭṭhā buddhassa santike.",
"snp3.2:8.1": "Taṃ tathāvādinaṃ māraṃ,",
"snp3.2:8.2": "bhagavā etadabravi;",
"snp3.2:8.3": "“Pamattabandhu pāpima,",
"snp3.2:8.4": "yenatthena idhāgato.",
"snp3.2:9.1": "Aṇumattopi puññena,",
"snp3.2:9.2": "Attho mayhaṃ na vijjati;",
"snp3.2:9.3": "Yesañca attho puññena,",
"snp3.2:9.4": "Te māro vattumarahati.",
"snp3.2:10.1": "Atthi saddhā tathā viriyaṃ,",
"snp3.2:10.2": "paññā ca mama vijjati;",
"snp3.2:10.3": "Evaṃ maṃ pahitattampi,",
"snp3.2:10.4": "kiṃ jīvamanupucchasi.",
"snp3.2:11.1": "Nadīnamapi sotāni,",
"snp3.2:11.2": "ayaṃ vāto visosaye;",
"snp3.2:11.3": "Kiñca me pahitattassa,",
"snp3.2:11.4": "lohitaṃ nupasussaye.",
"snp3.2:12.1": "Lohite sussamānamhi, #10",
"snp3.2:12.2": "Pittaṃ semhañca sussati;",
"snp3.2:12.3": "Maṃsesu khīyamānesu,",
"snp3.2:12.4": "Bhiyyo cittaṃ pasīdati;",
"snp3.2:12.5": "Bhiyyo sati ca paññā ca,",
"snp3.2:12.6": "Samādhi mama tiṭṭhati.",
"snp3.2:13.1": "Tassa mevaṃ viharato, #11",
"snp3.2:13.2": "Pattassuttamavedanaṃ;",
"snp3.2:13.3": "Kāmesu nāpekkhate cittaṃ,",
"snp3.2:13.4": "Passa sattassa suddhataṃ.",
"snp3.2:14.1": "Kāmā te paṭhamā senā, #12",
"snp3.2:14.2": "Dutiyā arati vuccati;",
"snp3.2:14.3": "Tatiyā khuppipāsā te,",
"snp3.2:14.4": "Catutthī taṇhā pavuccati.",
"snp3.2:15.1": "Pañcamaṃ thinamiddhaṃ te, #13",
"snp3.2:15.2": "Chaṭṭhā bhīrū pavuccati;",
"snp3.2:15.3": "Sattamī vicikicchā te,",
"snp3.2:15.4": "Makkho thambho te aṭṭhamo.",
"snp3.2:16.1": "Lābho siloko sakkāro, #14",
"snp3.2:16.2": "Micchāladdho ca yo yaso;",
"snp3.2:16.3": "Yo cattānaṃ samukkaṃse,",
"snp3.2:16.4": "Pare ca avajānati.",
"snp3.2:17.1": "Esā namuci te senā, #15",
"snp3.2:17.2": "Kaṇhassābhippahārinī;",
"snp3.2:17.3": "Na naṃ asūro jināti,",
"snp3.2:17.4": "Jetvā ca labhate sukhaṃ.",
"snp3.2:18.1": "Esa muñjaṃ parihare, #16",
"snp3.2:18.2": "Dhiratthu mama jīvitaṃ;",
"snp3.2:18.3": "Saṅgāme me mataṃ seyyo,",
"snp3.2:18.4": "Yañce jīve parājito.",
"snp3.2:19.1": "Pagāḷhettha na dissanti, #17",
"snp3.2:19.2": "Eke samaṇabrāhmaṇā;",
"snp3.2:19.3": "Tañca maggaṃ na jānanti,",
"snp3.2:19.4": "Yena gacchanti subbatā.",
"snp3.2:20.1": "Samantā dhajiniṃ disvā, #18",
"snp3.2:20.2": "Yuttaṃ māraṃ savāhanaṃ;",
"snp3.2:20.3": "Yuddhāya paccuggacchāmi,",
"snp3.2:20.4": "Mā maṃ ṭhānā acāvayi.",
"snp3.2:21.1": "Yaṃ te taṃ nappasahati, #19",
"snp3.2:21.2": "Senaṃ loko sadevako;",
"snp3.2:21.3": "Taṃ te paññāya bhecchāmi,",
"snp3.2:21.4": "Āmaṃ pattaṃva asmanā.",
"snp3.2:22.1": "Vasīkaritvā saṅkappaṃ, #20",
"snp3.2:22.2": "Satiñca sūpatiṭṭhitaṃ;",
"snp3.2:22.3": "Raṭṭhā raṭṭhaṃ vicarissaṃ,",
"snp3.2:22.4": "Sāvake vinayaṃ puthū.",
"snp3.2:23.1": "Te appamattā pahitattā, #21",
"snp3.2:23.2": "Mama sāsanakārakā;",
"snp3.2:23.3": "Akāmassa te gamissanti,",
"snp3.2:23.4": "Yattha gantvā na socare”.",
"snp3.2:24.1": "“Satta vassāni bhagavantaṃ, #22",
"snp3.2:24.2": "Anubandhiṃ padāpadaṃ;",
"snp3.2:24.3": "Otāraṃ nādhigacchissaṃ,",
"snp3.2:24.4": "Sambuddhassa satīmato.",
"snp3.2:25.1": "Medavaṇṇaṃva pāsāṇaṃ, #23",
"snp3.2:25.2": "Vāyaso anupariyagā;",
"snp3.2:25.3": "Apettha muduṃ vindema,",
"snp3.2:25.4": "Api assādanā siyā.",
"snp3.2:26.1": "Aladdhā tattha assādaṃ, #24",
"snp3.2:26.2": "Vāyasetto apakkami;",
"snp3.2:26.3": "Kākova selamāsajja,",
"snp3.2:26.4": "Nibbijjāpema gotamaṃ”.",
"snp3.2:27.1": "Tassa sokaparetassa, #25",
"snp3.2:27.2": "Vīṇā kacchā abhassatha;",
"snp3.2:27.3": "Tato so dummano yakkho,",
"snp3.2:27.4": "Tatthevantaradhāyathāti.",
"snp3.2:28.1": "Padhānasuttaṃ dutiyaṃ."
}