{
"snp4.11:1.1": "Sutta Nipāta 4.11",
"snp4.11:2.1": "Kalahavivādasutta",
"snp4.11:3.1": "“Kutopahūtā kalahā vivādā,",
"snp4.11:3.2": "Paridevasokā sahamaccharā ca;",
"snp4.11:3.3": "Mānātimānā sahapesuṇā ca,",
"snp4.11:3.4": "Kutopahūtā te tadiṅgha brūhi”.",
"snp4.11:4.1": "“Piyappahūtā kalahā vivādā, #2",
"snp4.11:4.2": "Paridevasokā sahamaccharā ca;",
"snp4.11:4.3": "Mānātimānā sahapesuṇā ca,",
"snp4.11:4.4": "Maccherayuttā kalahā vivādā;",
"snp4.11:4.5": "Vivādajātesu ca pesuṇāni”.",
"snp4.11:5.1": "“Piyā su lokasmiṃ kutonidānā, #3",
"snp4.11:5.2": "Ye cāpi lobhā vicaranti loke;",
"snp4.11:5.3": "Āsā ca niṭṭhā ca kutonidānā,",
"snp4.11:5.4": "Ye samparāyāya narassa honti”.",
"snp4.11:6.1": "“Chandānidānāni piyāni loke, #4",
"snp4.11:6.2": "Ye cāpi lobhā vicaranti loke;",
"snp4.11:6.3": "Āsā ca niṭṭhā ca itonidānā,",
"snp4.11:6.4": "Ye samparāyāya narassa honti”.",
"snp4.11:7.1": "“Chando nu lokasmiṃ kutonidāno, #5",
"snp4.11:7.2": "Vinicchayā cāpi kutopahūtā;",
"snp4.11:7.3": "Kodho mosavajjañca kathaṃkathā ca,",
"snp4.11:7.4": "Ye vāpi dhammā samaṇena vuttā”.",
"snp4.11:8.1": "“Sātaṃ asātanti yamāhu loke, #6",
"snp4.11:8.2": "Tamūpanissāya pahoti chando;",
"snp4.11:8.3": "Rūpesu disvā vibhavaṃ bhavañca,",
"snp4.11:8.4": "Vinicchayaṃ kubbati jantu loke.",
"snp4.11:9.1": "Kodho mosavajjañca kathaṅkathā ca, #7",
"snp4.11:9.2": "Etepi dhammā dvayameva sante;",
"snp4.11:9.3": "Kathaṅkathī ñāṇapathāya sikkhe,",
"snp4.11:9.4": "Ñatvā pavuttā samaṇena dhammā”.",
"snp4.11:10.1": "“Sātaṃ asātañca kutonidānā, #8",
"snp4.11:10.2": "Kismiṃ asante na bhavanti hete;",
"snp4.11:10.3": "Vibhavaṃ bhavañcāpi yametamatthaṃ,",
"snp4.11:10.4": "Etaṃ me pabrūhi yatonidānaṃ”.",
"snp4.11:11.1": "“Phassanidānaṃ sātaṃ asātaṃ, #9",
"snp4.11:11.2": "Phasse asante na bhavanti hete;",
"snp4.11:11.3": "Vibhavaṃ bhavañcāpi yametamatthaṃ,",
"snp4.11:11.4": "Etaṃ te pabrūmi itonidānaṃ”.",
"snp4.11:12.1": "“Phasso nu lokasmi kutonidāno, #10",
"snp4.11:12.2": "Pariggahā cāpi kutopahūtā;",
"snp4.11:12.3": "Kismiṃ asante na mamattamatthi,",
"snp4.11:12.4": "Kismiṃ vibhūte na phusanti phassā”.",
"snp4.11:13.1": "“Nāmañca rūpañca paṭicca phasso, #11",
"snp4.11:13.2": "Icchānidānāni pariggahāni;",
"snp4.11:13.3": "Icchāyasantyā na mamattamatthi,",
"snp4.11:13.4": "Rūpe vibhūte na phusanti phassā”.",
"snp4.11:14.1": "“Kathaṃ sametassa vibhoti rūpaṃ, #12",
"snp4.11:14.2": "Sukhaṃ dukhañcāpi kathaṃ vibhoti;",
"snp4.11:14.3": "Etaṃ me pabrūhi yathā vibhoti,",
"snp4.11:14.4": "Taṃ jāniyāmāti me mano ahu”.",
"snp4.11:15.1": "“Na saññasaññī na visaññasaññī, #13",
"snp4.11:15.2": "Nopi asaññī na vibhūtasaññī;",
"snp4.11:15.3": "Evaṃ sametassa vibhoti rūpaṃ,",
"snp4.11:15.4": "Saññānidānā hi papañcasaṅkhā”.",
"snp4.11:16.1": "“Yaṃ taṃ apucchimha akittayī no, #14",
"snp4.11:16.2": "Aññaṃ taṃ pucchāma tadiṅgha brūhi;",
"snp4.11:16.3": "Ettāvataggaṃ nu vadanti heke,",
"snp4.11:16.4": "Yakkhassa suddhiṃ idha paṇḍitāse;",
"snp4.11:16.5": "Udāhu aññampi vadanti etto”.",
"snp4.11:17.1": "“Ettāvataggampi vadanti heke, #15",
"snp4.11:17.2": "Yakkhassa suddhiṃ idha paṇḍitāse;",
"snp4.11:17.3": "Tesaṃ paneke samayaṃ vadanti,",
"snp4.11:17.4": "Anupādisese kusalā vadānā.",
"snp4.11:18.1": "Ete ca ñatvā upanissitāti, #16",
"snp4.11:18.2": "Ñatvā munī nissaye so vimaṃsī;",
"snp4.11:18.3": "Ñatvā vimutto na vivādameti,",
"snp4.11:18.4": "Bhavābhavāya na sameti dhīro”ti.",
"snp4.11:19.1": "Kalahavivādasuttaṃ ekādasamaṃ."
}