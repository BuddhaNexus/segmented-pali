{
"cp30:1.1": "Cariyāpiṭaka",
"cp30:2.1": "Yudhañjayavagga",
"cp30:3.1": "Saccapāramī 4",
"cp30:4.1": "Maccharājacariya",
"cp30:5.1": "“Punāparaṃ yadā homi,",
"cp30:5.2": "maccharājā mahāsare;",
"cp30:5.3": "Uṇhe sūriyasantāpe,",
"cp30:5.4": "sare udaka khīyatha.",
"cp30:6.1": "Tato kākā ca gijjhā ca,",
"cp30:6.2": "kaṅkā kulalasenakā;",
"cp30:6.3": "Bhakkhayanti divārattiṃ,",
"cp30:6.4": "macche upanisīdiya.",
"cp30:7.1": "Evaṃ cintesahaṃ tattha,",
"cp30:7.2": "saha ñātīhi pīḷito;",
"cp30:7.3": "‘Kena nu kho upāyena,",
"cp30:7.4": "ñātī dukkhā pamocaye’.",
"cp30:8.1": "Vicintayitvā dhammatthaṃ,",
"cp30:8.2": "saccaṃ addasa passayaṃ;",
"cp30:8.3": "Sacce ṭhatvā pamocesiṃ,",
"cp30:8.4": "ñātīnaṃ taṃ atikkhayaṃ.",
"cp30:9.1": "Anussaritvā sataṃ dhammaṃ,",
"cp30:9.2": "paramatthaṃ vicintayaṃ;",
"cp30:9.3": "Akāsiṃ saccakiriyaṃ,",
"cp30:9.4": "yaṃ loke dhuvasassataṃ.",
"cp30:10.1": "‘Yato sarāmi attānaṃ,",
"cp30:10.2": "yato pattosmi viññutaṃ;",
"cp30:10.3": "Nābhijānāmi sañcicca,",
"cp30:10.4": "ekapāṇampi hiṃsitaṃ.",
"cp30:11.1": "Etena saccavajjena,",
"cp30:11.2": "pajjunno abhivassatu;",
"cp30:11.3": "Abhitthanaya pajjunna,",
"cp30:11.4": "nidhiṃ kākassa nāsaya;",
"cp30:11.5": "Kākaṃ sokāya randhehi,",
"cp30:11.6": "macche sokā pamocaya’.",
"cp30:12.1": "Saha kate saccavare,",
"cp30:12.2": "pajjunno abhigajjiya;",
"cp30:12.3": "Thalaṃ ninnañca pūrento,",
"cp30:12.4": "khaṇena abhivassatha.",
"cp30:13.1": "Evarūpaṃ saccavaraṃ,",
"cp30:13.2": "katvā vīriyamuttamaṃ;",
"cp30:13.3": "Vassāpesiṃ mahāmeghaṃ,",
"cp30:13.4": "saccatejabalassito;",
"cp30:13.5": "Saccena me samo natthi,",
"cp30:13.6": "esā me saccapāramī”ti.",
"cp30:14.1": "Maccharājacariyaṃ dasamaṃ."
}