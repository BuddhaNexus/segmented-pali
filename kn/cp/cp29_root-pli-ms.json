{
"cp29:1.1": "Cariyāpiṭaka",
"cp29:2.1": "Yudhañjayavagga",
"cp29:3.1": "Saccapāramī 3",
"cp29:4.1": "Vaṭṭapotakacariya",
"cp29:5.1": "“Punāparaṃ yadā homi,",
"cp29:5.2": "magadhe vaṭṭapotako;",
"cp29:5.3": "Ajātapakkho taruṇo,",
"cp29:5.4": "maṃsapesi kulāvake.",
"cp29:6.1": "Mukhatuṇḍakenāharitvā,",
"cp29:6.2": "mātā posayatī mamaṃ;",
"cp29:6.3": "Tassā phassena jīvāmi,",
"cp29:6.4": "natthi me kāyikaṃ balaṃ.",
"cp29:7.1": "Saṃvacchare gimhasamaye,",
"cp29:7.2": "davaḍāho padippati;",
"cp29:7.3": "Upagacchati amhākaṃ,",
"cp29:7.4": "pāvako kaṇhavattanī.",
"cp29:8.1": "Dhamadhamāiti evaṃ,",
"cp29:8.2": "saddāyanto mahāsikhī;",
"cp29:8.3": "Anupubbena jhāpento,",
"cp29:8.4": "aggi mamamupāgami.",
"cp29:9.1": "Aggivegabhayātītā,",
"cp29:9.2": "tasitā mātāpitā mama;",
"cp29:9.3": "Kulāvake maṃ chaḍḍetvā,",
"cp29:9.4": "attānaṃ parimocayuṃ.",
"cp29:10.1": "Pāde pakkhe pajahāmi,",
"cp29:10.2": "natthi me kāyikaṃ balaṃ;",
"cp29:10.3": "Sohaṃ agatiko tattha,",
"cp29:10.4": "evaṃ cintesahaṃ tadā.",
"cp29:11.1": "‘Yesāhaṃ upadhāveyyaṃ,",
"cp29:11.2": "bhīto tasitavedhito;",
"cp29:11.3": "Te maṃ ohāya pakkantā,",
"cp29:11.4": "kathaṃ me ajja kātave.",
"cp29:12.1": "Atthi loke sīlaguṇo,",
"cp29:12.2": "saccaṃ soceyyanuddayā;",
"cp29:12.3": "Tena saccena kāhāmi,",
"cp29:12.4": "saccakiriyamuttamaṃ.",
"cp29:13.1": "Āvejjetvā dhammabalaṃ,",
"cp29:13.2": "saritvā pubbake jine;",
"cp29:13.3": "Saccabalamavassāya,",
"cp29:13.4": "saccakiriyamakāsahaṃ.",
"cp29:14.1": "Santi pakkhā apatanā,",
"cp29:14.2": "santi pādā avañcanā;",
"cp29:14.3": "Mātāpitā ca nikkhantā,",
"cp29:14.4": "jātaveda paṭikkama’.",
"cp29:15.1": "Sahasacce kate mayhaṃ,",
"cp29:15.2": "Mahāpajjalito sikhī;",
"cp29:15.3": "Vajjesi soḷasakarīsāni,",
"cp29:15.4": "Udakaṃ patvā yathā sikhī;",
"cp29:15.5": "Saccena me samo natthi,",
"cp29:15.6": "Esā me saccapāramī”ti.",
"cp29:16.1": "Vaṭṭapotakacariyaṃ navamaṃ."
}