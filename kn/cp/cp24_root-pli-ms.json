{
"cp24:1.1": "Cariyāpiṭaka",
"cp24:2.1": "Yudhañjayavagga",
"cp24:3.1": "Nekkhammapāramī 4",
"cp24:4.1": "Bhisacariya",
"cp24:5.1": "“Punāparaṃ yadā homi,",
"cp24:5.2": "kāsīnaṃ puravaruttame;",
"cp24:5.3": "Bhaginī ca bhātaro satta,",
"cp24:5.4": "nibbattā sotthiye kule.",
"cp24:6.1": "Etesaṃ pubbajo āsiṃ,",
"cp24:6.2": "hirīsukkamupāgato;",
"cp24:6.3": "Bhavaṃ disvāna bhayato,",
"cp24:6.4": "nekkhammābhirato ahaṃ.",
"cp24:7.1": "Mātāpitūhi pahitā,",
"cp24:7.2": "sahāyā ekamānasā;",
"cp24:7.3": "Kāmehi maṃ nimantenti,",
"cp24:7.4": "‘kulavaṃsaṃ dharehi’ti.",
"cp24:8.1": "Yaṃ tesaṃ vacanaṃ vuttaṃ,",
"cp24:8.2": "gihīdhamme sukhāvahaṃ;",
"cp24:8.3": "Taṃ me ahosi kaṭhinaṃ,",
"cp24:8.4": "tattaphālasamaṃ viya.",
"cp24:9.1": "Te maṃ tadā ukkhipantaṃ,",
"cp24:9.2": "pucchiṃsu patthitaṃ mama;",
"cp24:9.3": "‘Kiṃ tvaṃ patthayase samma,",
"cp24:9.4": "yadi kāme na bhuñjasi’.",
"cp24:10.1": "Tesāhaṃ evamavacaṃ,",
"cp24:10.2": "atthakāmo hitesinaṃ;",
"cp24:10.3": "‘Nāhaṃ patthemi gihībhāvaṃ,",
"cp24:10.4": "nekkhammābhirato ahaṃ’.",
"cp24:11.1": "Te mayhaṃ vacanaṃ sutvā,",
"cp24:11.2": "pitu mātu ca sāvayuṃ;",
"cp24:11.3": "Mātāpitā evamāhu,",
"cp24:11.4": "‘sabbeva pabbajāma bho’.",
"cp24:12.1": "Ubho mātāpitā mayhaṃ,",
"cp24:12.2": "bhaginī ca satta bhātaro;",
"cp24:12.3": "Amitadhanaṃ chaḍḍayitvā,",
"cp24:12.4": "pāvisimhā mahāvanan”ti.",
"cp24:13.1": "Bhisacariyaṃ catutthaṃ."
}