{
"cp7:1.1": "Cariyāpiṭaka",
"cp7:2.1": "Akittivagga",
"cp7:3.1": "Dānapāramī 7",
"cp7:4.1": "Candakumāracariya",
"cp7:5.1": "“Punāparaṃ yadā homi,",
"cp7:5.2": "ekarājassa atrajo;",
"cp7:5.3": "Nagare pupphavatiyā,",
"cp7:5.4": "kumāro candasavhayo.",
"cp7:6.1": "Tadāhaṃ yajanā mutto,",
"cp7:6.2": "nikkhanto yaññavāṭato;",
"cp7:6.3": "Saṃvegaṃ janayitvāna,",
"cp7:6.4": "mahādānaṃ pavattayiṃ.",
"cp7:7.1": "Nāhaṃ pivāmi khādāmi,",
"cp7:7.2": "napi bhuñjāmi bhojanaṃ;",
"cp7:7.3": "Dakkhiṇeyye adatvāna,",
"cp7:7.4": "api chappañcarattiyo.",
"cp7:8.1": "Yathāpi vāṇijo nāma,",
"cp7:8.2": "Katvāna bhaṇḍasañcayaṃ;",
"cp7:8.3": "Yattha lābho mahā hoti,",
"cp7:8.4": "Tattha taṃ harati bhaṇḍakaṃ.",
"cp7:9.1": "Tatheva sakabhuttāpi,",
"cp7:9.2": "pare dinnaṃ mahapphalaṃ;",
"cp7:9.3": "Tasmā parassa dātabbaṃ,",
"cp7:9.4": "satabhāgo bhavissati.",
"cp7:10.1": "Etamatthavasaṃ ñatvā,",
"cp7:10.2": "demi dānaṃ bhavābhave;",
"cp7:10.3": "Na paṭikkamāmi dānato,",
"cp7:10.4": "sambodhimanupattiyā”ti.",
"cp7:11.1": "Candakumāracariyaṃ sattamaṃ."
}