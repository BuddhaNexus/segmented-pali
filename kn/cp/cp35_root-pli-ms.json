{
"cp35:1.1": "Cariyāpiṭaka",
"cp35:2.1": "Yudhañjayavagga",
"cp35:3.1": "Upekkhāpāramī 1",
"cp35:4.1": "Mahālomahaṃsacariya",
"cp35:5.1": "“Susāne seyyaṃ kappemi,",
"cp35:5.2": "Chavaṭṭhikaṃ upanidhāyahaṃ;",
"cp35:5.3": "Gāmaṇḍalā upāgantvā,",
"cp35:5.4": "Rūpaṃ dassentinappakaṃ.",
"cp35:6.1": "Apare gandhamālañca,",
"cp35:6.2": "bhojanaṃ vividhaṃ bahuṃ;",
"cp35:6.3": "Upāyanānūpanenti,",
"cp35:6.4": "haṭṭhā saṃviggamānasā.",
"cp35:7.1": "Ye me dukkhaṃ upaharanti,",
"cp35:7.2": "ye ca denti sukhaṃ mama;",
"cp35:7.3": "Sabbesaṃ samako homi,",
"cp35:7.4": "dayā kopo na vijjati.",
"cp35:8.1": "Sukhadukkhe tulābhūto,",
"cp35:8.2": "Yasesu ayasesu ca;",
"cp35:8.3": "Sabbattha samako homi,",
"cp35:8.4": "Esā me upekkhāpāramī”ti. #356",
"cp35:9.1": "Mahālomahaṃsacariyaṃ pannarasamaṃ.",
"cp35:10.1": "Yudhañjayavaggo tatiyo.",
"cp35:11.1": "Tassuddānaṃ",
"cp35:12.1": "Yudhañjayo somanasso,",
"cp35:12.2": "ayogharabhisena ca;",
"cp35:12.3": "Soṇanando mūgapakkho,",
"cp35:12.4": "kapirājā saccasavhayo.",
"cp35:13.1": "Vaṭṭako maccharājā ca,",
"cp35:13.2": "kaṇhadīpāyano isi;",
"cp35:13.3": "Sutasomo puna āsiṃ,",
"cp35:13.4": "sāmo ca ekarājahu;",
"cp35:13.5": "Upekkhāpāramī āsi,",
"cp35:13.6": "iti vutthaṃ mahesinā.",
"cp35:14.1": "Evaṃ bahubbidhaṃ dukkhaṃ,",
"cp35:14.2": "sampattī ca bahubbidhā;",
"cp35:14.3": "Bhavābhave anubhavitvā,",
"cp35:14.4": "patto sambodhimuttamaṃ.",
"cp35:15.1": "Datvā dātabbakaṃ dānaṃ,",
"cp35:15.2": "sīlaṃ pūretvā asesato;",
"cp35:15.3": "Nekkhamme pāramiṃ gantvā,",
"cp35:15.4": "patto sambodhimuttamaṃ.",
"cp35:16.1": "Paṇḍite paripucchitvā,",
"cp35:16.2": "vīriyaṃ katvāna muttamaṃ;",
"cp35:16.3": "Khantiyā pāramiṃ gantvā,",
"cp35:16.4": "patto sambodhimuttamaṃ.",
"cp35:17.1": "Katvā daḷhamadhiṭṭhānaṃ,",
"cp35:17.2": "saccavācānurakkhiya;",
"cp35:17.3": "Mettāya pāramiṃ gantvā,",
"cp35:17.4": "patto sambodhimuttamaṃ.",
"cp35:18.1": "Lābhālābhe yasāyase,",
"cp35:18.2": "sammānanāvamānane;",
"cp35:18.3": "Sabbattha samako hutvā,",
"cp35:18.4": "patto sambodhimuttamaṃ.",
"cp35:19.1": "Kosajjaṃ bhayato disvā,",
"cp35:19.2": "vīriyārambhañca khemato;",
"cp35:19.3": "Āraddhavīriyā hotha,",
"cp35:19.4": "esā buddhānusāsanī.",
"cp35:20.1": "Vivādaṃ bhayato disvā,",
"cp35:20.2": "avivādañca khemato;",
"cp35:20.3": "Samaggā sakhilā hotha,",
"cp35:20.4": "esā buddhānusāsanī.",
"cp35:21.1": "Pamādaṃ bhayato disvā,",
"cp35:21.2": "appamādañca khemato;",
"cp35:21.3": "Bhāvethaṭṭhaṅgikaṃ maggaṃ,",
"cp35:21.4": "esā buddhānusāsanī.",
"cp35:22.1": "Itthaṃ sudaṃ bhagavā attano pubbacariyaṃ sambhāvayamāno buddhāpadāniyaṃ nāma dhammapariyāyaṃ abhāsitthāti.",
"cp35:23.1": "Cariyāpiṭakaṃ niṭṭhitaṃ."
}