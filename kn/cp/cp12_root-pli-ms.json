{
"cp12:1.1": "Cariyāpiṭaka",
"cp12:2.1": "Hatthināgavagga",
"cp12:3.1": "Sīlapāramī 2",
"cp12:4.1": "Bhūridattacariya",
"cp12:5.1": "“Punāparaṃ yadā homi,",
"cp12:5.2": "bhūridatto mahiddhiko;",
"cp12:5.3": "Virūpakkhena mahāraññā,",
"cp12:5.4": "devalokamagañchahaṃ.",
"cp12:6.1": "Tattha passitvāhaṃ deve,",
"cp12:6.2": "ekantaṃ sukhasamappite;",
"cp12:6.3": "Taṃ saggagamanatthāya,",
"cp12:6.4": "sīlabbataṃ samādiyiṃ.",
"cp12:7.1": "Sarīrakiccaṃ katvāna,",
"cp12:7.2": "bhutvā yāpanamattakaṃ;",
"cp12:7.3": "Caturo aṅge adhiṭṭhāya,",
"cp12:7.4": "semi vammikamuddhani.",
"cp12:8.1": "‘Chaviyā cammena maṃsena,",
"cp12:8.2": "Nahāruaṭṭhikehi vā;",
"cp12:8.3": "Yassa etena karaṇīyaṃ,",
"cp12:8.4": "Dinnaṃyeva harātu so’.",
"cp12:9.1": "Saṃsito akataññunā,",
"cp12:9.2": "ālampāyano mamaggahi;",
"cp12:9.3": "Peḷāya pakkhipitvāna,",
"cp12:9.4": "kīḷeti maṃ tahiṃ tahiṃ.",
"cp12:10.1": "Peḷāya pakkhipantepi,",
"cp12:10.2": "sammaddantepi pāṇinā;",
"cp12:10.3": "Ālampāyane na kuppāmi,",
"cp12:10.4": "sīlakhaṇḍabhayā mama.",
"cp12:11.1": "Sakajīvitapariccāgo,",
"cp12:11.2": "tiṇato lahuko mama;",
"cp12:11.3": "Sīlavītikkamo mayhaṃ,",
"cp12:11.4": "pathavīuppatanaṃ viya.",
"cp12:12.1": "Nirantaraṃ jātisataṃ,",
"cp12:12.2": "cajeyyaṃ mama jīvitaṃ;",
"cp12:12.3": "Neva sīlaṃ pabhindeyyaṃ,",
"cp12:12.4": "catuddīpāna hetupi.",
"cp12:13.1": "Api cāhaṃ sīlarakkhāya,",
"cp12:13.2": "Sīlapāramipūriyā;",
"cp12:13.3": "Na karomi citte aññathattaṃ,",
"cp12:13.4": "Pakkhipantampi peḷake”ti.",
"cp12:14.1": "Bhūridattacariyaṃ dutiyaṃ."
}