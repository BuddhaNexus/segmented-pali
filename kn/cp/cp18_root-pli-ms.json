{
"cp18:1.1": "Cariyāpiṭaka",
"cp18:2.1": "Hatthināgavagga",
"cp18:3.1": "Sīlapāramī 8",
"cp18:4.1": "Dhammadevaputtacariya",
"cp18:5.1": "“Punāparaṃ yadā homi,",
"cp18:5.2": "mahāpakkho mahiddhiko;",
"cp18:5.3": "Dhammo nāma mahāyakkho,",
"cp18:5.4": "sabbalokānukampako.",
"cp18:6.1": "Dasakusalakammapathe,",
"cp18:6.2": "samādapento mahājanaṃ;",
"cp18:6.3": "Carāmi gāmanigamaṃ,",
"cp18:6.4": "samitto saparijjano.",
"cp18:7.1": "Pāpo kadariyo yakkho,",
"cp18:7.2": "dīpento dasa pāpake;",
"cp18:7.3": "Sopettha mahiyā carati,",
"cp18:7.4": "samitto saparijjano.",
"cp18:8.1": "Dhammavādī adhammo ca,",
"cp18:8.2": "ubho paccanikā mayaṃ;",
"cp18:8.3": "Dhure dhuraṃ ghaṭṭayantā,",
"cp18:8.4": "samimhā paṭipathe ubho.",
"cp18:9.1": "Kalaho vattatī bhesmā,",
"cp18:9.2": "kalyāṇapāpakassa ca;",
"cp18:9.3": "Maggā okkamanatthāya,",
"cp18:9.4": "mahāyuddho upaṭṭhito.",
"cp18:10.1": "Yadihaṃ tassa kuppeyyaṃ,",
"cp18:10.2": "yadi bhinde tapoguṇaṃ;",
"cp18:10.3": "Sahaparijanaṃ tassa,",
"cp18:10.4": "rajabhūtaṃ kareyyahaṃ.",
"cp18:11.1": "Api cāhaṃ sīlarakkhāya,",
"cp18:11.2": "nibbāpetvāna mānasaṃ;",
"cp18:11.3": "Saha janenokkamitvā,",
"cp18:11.4": "pathaṃ pāpassa dāsahaṃ.",
"cp18:12.1": "Saha pathato okkante,",
"cp18:12.2": "katvā cittassa nibbutiṃ;",
"cp18:12.3": "Vivaraṃ adāsi pathavī,",
"cp18:12.4": "pāpayakkhassa tāvade”ti.",
"cp18:13.1": "Dhammadevaputtacariyaṃ aṭṭhamaṃ."
}