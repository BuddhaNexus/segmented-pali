{
"cp25:1.1": "Cariyāpiṭaka",
"cp25:2.1": "Yudhañjayavagga",
"cp25:3.1": "Nekkhammapāramī 5",
"cp25:4.1": "Soṇapaṇḍitacariya",
"cp25:5.1": "“Punāparaṃ yadā homi,",
"cp25:5.2": "nagare brahmavaḍḍhane;",
"cp25:5.3": "Tattha kulavare seṭṭhe,",
"cp25:5.4": "mahāsāle ajāyahaṃ.",
"cp25:6.1": "Tadāpi lokaṃ disvāna,",
"cp25:6.2": "Andhībhūtaṃ tamotthaṭaṃ;",
"cp25:6.3": "Cittaṃ bhavato patikuṭati,",
"cp25:6.4": "Tuttavegahataṃ viya.",
"cp25:7.1": "Disvāna vividhaṃ pāpaṃ,",
"cp25:7.2": "evaṃ cintesahaṃ tadā;",
"cp25:7.3": "‘Kadāhaṃ gehā nikkhamma,",
"cp25:7.4": "pavisissāmi kānanaṃ’.",
"cp25:8.1": "Tadāpi maṃ nimantesuṃ,",
"cp25:8.2": "kāmabhogehi ñātayo;",
"cp25:8.3": "Tesampi chandamācikkhiṃ,",
"cp25:8.4": "‘mā nimantetha tehi maṃ’.",
"cp25:9.1": "Yo me kaniṭṭhako bhātā,",
"cp25:9.2": "nando nāmāsi paṇḍito;",
"cp25:9.3": "Sopi maṃ anusikkhanto,",
"cp25:9.4": "pabbajjaṃ samarocayi.",
"cp25:10.1": "Ahaṃ soṇo ca nando ca,",
"cp25:10.2": "ubho mātāpitā mama;",
"cp25:10.3": "Tadāpi bhoge chaḍḍetvā,",
"cp25:10.4": "pāvisimhā mahāvanan”ti.",
"cp25:11.1": "Soṇapaṇḍitacariyaṃ pañcamaṃ."
}