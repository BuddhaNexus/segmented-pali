{
"cp16:1.1": "Cariyāpiṭaka",
"cp16:2.1": "Hatthināgavagga",
"cp16:3.1": "Sīlapāramī 6",
"cp16:4.1": "Rurumigarājacariya",
"cp16:5.1": "“Punāparaṃ yadā homi,",
"cp16:5.2": "sutattakanakasannibho;",
"cp16:5.3": "Migarājā ruru nāma,",
"cp16:5.4": "paramasīlasamāhito.",
"cp16:6.1": "Ramme padese ramaṇīye,",
"cp16:6.2": "vivitte amanussake;",
"cp16:6.3": "Tattha vāsaṃ upagañchiṃ,",
"cp16:6.4": "gaṅgākūle manorame.",
"cp16:7.1": "Atha upari gaṅgāya,",
"cp16:7.2": "dhanikehi paripīḷito;",
"cp16:7.3": "Puriso gaṅgāya papati,",
"cp16:7.4": "‘jīvāmi vā marāmi vā’.",
"cp16:8.1": "Rattindivaṃ so gaṅgāya,",
"cp16:8.2": "vuyhamāno mahodake;",
"cp16:8.3": "Ravanto karuṇaṃ ravaṃ,",
"cp16:8.4": "majjhe gaṅgāya gacchati.",
"cp16:9.1": "Tassāhaṃ saddaṃ sutvāna,",
"cp16:9.2": "karuṇaṃ paridevato;",
"cp16:9.3": "Gaṅgāya tīre ṭhatvāna,",
"cp16:9.4": "apucchiṃ ‘kosi tvaṃ naro’.",
"cp16:10.1": "So me puṭṭho ca byākāsi,",
"cp16:10.2": "attano karaṇaṃ tadā;",
"cp16:10.3": "‘Dhanikehi bhīto tasito,",
"cp16:10.4": "pakkhandohaṃ mahānadiṃ’.",
"cp16:11.1": "Tassa katvāna kāruññaṃ,",
"cp16:11.2": "cajitvā mama jīvitaṃ;",
"cp16:11.3": "Pavisitvā nīhariṃ tassa,",
"cp16:11.4": "andhakāramhi rattiyā.",
"cp16:12.1": "Assatthakālamaññāya,",
"cp16:12.2": "tassāhaṃ idamabraviṃ;",
"cp16:12.3": "‘Ekaṃ taṃ varaṃ yācāmi,",
"cp16:12.4": "mā maṃ kassaci pāvada’.",
"cp16:13.1": "Nagaraṃ gantvāna ācikkhi,",
"cp16:13.2": "pucchito dhanahetuko;",
"cp16:13.3": "Rājānaṃ so gahetvāna,",
"cp16:13.4": "upagañchi mamantikaṃ.",
"cp16:14.1": "Yāvatā karaṇaṃ sabbaṃ,",
"cp16:14.2": "rañño ārocitaṃ mayā;",
"cp16:14.3": "Rājā sutvāna vacanaṃ,",
"cp16:14.4": "usuṃ tassa pakappayi;",
"cp16:14.5": "‘Idheva ghātayissāmi,",
"cp16:14.6": "mittadubbhiṃ anāriyaṃ’.",
"cp16:15.1": "Tamahaṃ anurakkhanto,",
"cp16:15.2": "nimminiṃ mama attanā;",
"cp16:15.3": "‘Tiṭṭhateso mahārāja,",
"cp16:15.4": "kāmakāro bhavāmi te’.",
"cp16:16.1": "Anurakkhiṃ mama sīlaṃ,",
"cp16:16.2": "nārakkhiṃ mama jīvitaṃ;",
"cp16:16.3": "Sīlavā hi tadā āsiṃ,",
"cp16:16.4": "bodhiyāyeva kāraṇā”ti.",
"cp16:17.1": "Rurumigarājacariyaṃ chaṭṭhaṃ."
}