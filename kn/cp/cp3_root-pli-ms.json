{
"cp3:1.1": "Cariyāpiṭaka",
"cp3:2.1": "Akittivagga",
"cp3:3.1": "Dānapāramī 3",
"cp3:4.1": "Kururājacariya",
"cp3:5.1": "“Punāparaṃ yadā homi,",
"cp3:5.2": "indapatthe puruttame;",
"cp3:5.3": "Rājā dhanañcayo nāma,",
"cp3:5.4": "kusale dasahupāgato.",
"cp3:6.1": "Kaliṅgaraṭṭhavisayā,",
"cp3:6.2": "brāhmaṇā upagañchu maṃ;",
"cp3:6.3": "Āyācuṃ maṃ hatthināgaṃ,",
"cp3:6.4": "dhaññaṃ maṅgalasammataṃ.",
"cp3:7.1": "‘Avuṭṭhiko janapado,",
"cp3:7.2": "dubbhikkho chātako mahā;",
"cp3:7.3": "Dadāhi pavaraṃ nāgaṃ,",
"cp3:7.4": "nīlaṃ añjanasavhayaṃ’.",
"cp3:8.1": "‘Na me yācakamanuppatte,",
"cp3:8.2": "paṭikkhepo anucchavo;",
"cp3:8.3": "Mā me bhijji samādānaṃ,",
"cp3:8.4": "dassāmi vipulaṃ gajaṃ’.",
"cp3:9.1": "Nāgaṃ gahetvā soṇḍāya,",
"cp3:9.2": "bhiṅgāre ratanāmaye;",
"cp3:9.3": "Jalaṃ hatthe ākiritvā,",
"cp3:9.4": "brāhmaṇānaṃ adaṃ gajaṃ.",
"cp3:10.1": "Tassa nāge padinnamhi,",
"cp3:10.2": "amaccā etadabravuṃ;",
"cp3:10.3": "‘Kiṃ nu tuyhaṃ varaṃ nāgaṃ,",
"cp3:10.4": "yācakānaṃ padassasi.",
"cp3:11.1": "Dhaññaṃ maṅgalasampannaṃ,",
"cp3:11.2": "saṅgāmavijayuttamaṃ;",
"cp3:11.3": "Tasmiṃ nāge padinnamhi,",
"cp3:11.4": "kiṃ te rajjaṃ karissati’.",
"cp3:12.1": "‘Rajjampi me dade sabbaṃ,",
"cp3:12.2": "sarīraṃ dajjamattano;",
"cp3:12.3": "Sabbaññutaṃ piyaṃ mayhaṃ,",
"cp3:12.4": "tasmā nāgaṃ adāsahan’”ti.",
"cp3:13.1": "Kururājacariyaṃ tatiyaṃ."
}