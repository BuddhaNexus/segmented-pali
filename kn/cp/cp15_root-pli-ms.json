{
"cp15:1.1": "Cariyāpiṭaka",
"cp15:2.1": "Hatthināgavagga",
"cp15:3.1": "Sīlapāramī 5",
"cp15:4.1": "Mahiṃsarājacariya",
"cp15:5.1": "“Punāparaṃ yadā homi,",
"cp15:5.2": "mahiṃso pavanacārako;",
"cp15:5.3": "Pavaḍḍhakāyo balavā,",
"cp15:5.4": "mahanto bhīmadassano.",
"cp15:6.1": "Pabbhāre giridugge ca,",
"cp15:6.2": "rukkhamūle dakāsaye;",
"cp15:6.3": "Hotettha ṭhānaṃ mahiṃsānaṃ,",
"cp15:6.4": "koci koci tahiṃ tahiṃ.",
"cp15:7.1": "Vicaranto brahāraññe,",
"cp15:7.2": "ṭhānaṃ addasa bhaddakaṃ;",
"cp15:7.3": "Taṃ ṭhānaṃ upagantvāna,",
"cp15:7.4": "tiṭṭhāmi ca sayāmi ca.",
"cp15:8.1": "Athettha kapimāgantvā,",
"cp15:8.2": "pāpo anariyo lahu;",
"cp15:8.3": "Khandhe nalāṭe bhamuke,",
"cp15:8.4": "mutteti ohadeti taṃ.",
"cp15:9.1": "Sakimpi divasaṃ dutiyaṃ,",
"cp15:9.2": "tatiyaṃ catutthampi ca;",
"cp15:9.3": "Dūseti maṃ sabbakālaṃ,",
"cp15:9.4": "tena homi upadduto.",
"cp15:10.1": "Mamaṃ upaddutaṃ disvā,",
"cp15:10.2": "yakkho maṃ idamabravi;",
"cp15:10.3": "‘Nāsehetaṃ chavaṃ pāpaṃ,",
"cp15:10.4": "siṅgehi ca khurehi ca’.",
"cp15:11.1": "Evaṃ vutte, tadā yakkhe,",
"cp15:11.2": "ahaṃ taṃ idamabraviṃ;",
"cp15:11.3": "‘Kiṃ tvaṃ makkhesi kuṇapena,",
"cp15:11.4": "pāpena anariyena maṃ.",
"cp15:12.1": "Yadihaṃ tassa pakuppeyyaṃ,",
"cp15:12.2": "tato hīnataro bhave;",
"cp15:12.3": "Sīlañca me pabhijjeyya,",
"cp15:12.4": "viññū ca garaheyyu maṃ.",
"cp15:13.1": "Hīḷitā jīvitā vāpi,",
"cp15:13.2": "parisuddhena mataṃ varaṃ;",
"cp15:13.3": "Kyāhaṃ jīvitahetūpi,",
"cp15:13.4": "kāhāmi paraheṭhanaṃ’.",
"cp15:14.1": "Mamevāyaṃ maññamāno,",
"cp15:14.2": "aññepevaṃ karissati;",
"cp15:14.3": "Teva tassa vadhissanti,",
"cp15:14.4": "sā me mutti bhavissati.",
"cp15:15.1": "Hīnamajjhimaukkaṭṭhe,",
"cp15:15.2": "sahanto avamānitaṃ;",
"cp15:15.3": "Evaṃ labhati sappañño,",
"cp15:15.4": "manasā yathāpatthitan”ti.",
"cp15:16.1": "Mahiṃsarājacariyaṃ pañcamaṃ."
}