{
"vv6:1.1": "Vimānavatthu",
"vv6:2.1": "Itthivimāna",
"vv6:3.1": "Pīṭhavagga",
"vv6:4.1": "6. Paṭhamanāvāvimānavatthu",
"vv6:5.1": "“Suvaṇṇacchadanaṃ nāvaṃ,",
"vv6:5.2": "Nāri āruyha tiṭṭhasi;",
"vv6:5.3": "Ogāhasi pokkharaṇiṃ,",
"vv6:5.4": "Padmaṃ chindasi pāṇinā.",
"vv6:6.1": "Kena tetādiso vaṇṇo,",
"vv6:6.2": "kena te idha mijjhati;",
"vv6:6.3": "Uppajjanti ca te bhogā,",
"vv6:6.4": "ye keci manaso piyā.",
"vv6:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv6:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv6:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv6:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv6:8.1": "Sā devatā attamanā,",
"vv6:8.2": "moggallānena pucchitā;",
"vv6:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv6:8.4": "yassa kammassidaṃ phalaṃ.",
"vv6:9.1": "“Ahaṃ manussesu manussabhūtā,",
"vv6:9.2": "Purimāya jātiyā manussaloke;",
"vv6:9.3": "Disvāna bhikkhū tasite kilante,",
"vv6:9.4": "Uṭṭhāya pātuṃ udakaṃ adāsiṃ.",
"vv6:10.1": "Yo ve kilantāna pipāsitānaṃ,",
"vv6:10.2": "Uṭṭhāya pātuṃ udakaṃ dadāti;",
"vv6:10.3": "Sītodakā tassa bhavanti najjo,",
"vv6:10.4": "Pahūtamalyā bahupuṇḍarīkā.",
"vv6:11.1": "Taṃ āpagā anupariyanti sabbadā,",
"vv6:11.2": "Sītodakā vālukasanthatā nadī;",
"vv6:11.3": "Ambā ca sālā tilakā ca jambuyo,",
"vv6:11.4": "Uddālakā pāṭaliyo ca phullā.",
"vv6:12.1": "Taṃ bhūmibhāgehi upetarūpaṃ,",
"vv6:12.2": "Vimānaseṭṭhaṃ bhusa sobhamānaṃ;",
"vv6:12.3": "Tassīdha kammassa ayaṃ vipāko,",
"vv6:12.4": "Etādisaṃ puññakatā labhanti.",
"vv6:13.1": "Tena metādiso vaṇṇo,",
"vv6:13.2": "tena me idha mijjhati;",
"vv6:13.3": "Uppajjanti ca me bhogā,",
"vv6:13.4": "ye keci manaso piyā.",
"vv6:14.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv6:14.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv6:14.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv6:14.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv6:15.1": "Paṭhamanāvāvimānaṃ chaṭṭhaṃ."
}