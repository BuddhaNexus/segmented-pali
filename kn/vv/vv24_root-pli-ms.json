{
"vv24:1.1": "Vimānavatthu",
"vv24:2.1": "Itthivimāna",
"vv24:3.1": "Cittalatāvagga",
"vv24:4.1": "7. Uposathāvimānavatthu",
"vv24:5.1": "“Abhikkantena vaṇṇena,",
"vv24:5.2": "yā tvaṃ tiṭṭhasi devate;",
"vv24:5.3": "Obhāsentī disā sabbā,",
"vv24:5.4": "osadhī viya tārakā.",
"vv24:6.1": "Kena tetādiso vaṇṇo, … pe …",
"vv24:6.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv24:7.1": "Sā devatā attamanā, … pe …",
"vv24:7.4": "yassa kammassidaṃ phalaṃ.",
"vv24:8.1": "“Uposathāti maṃ aññaṃsu,",
"vv24:8.2": "sāketāyaṃ upāsikā;",
"vv24:8.3": "Saddhā sīlena sampannā,",
"vv24:8.4": "saṃvibhāgaratā sadā.",
"vv24:9.1": "Acchādanañca bhattañca,",
"vv24:9.2": "senāsanaṃ padīpiyaṃ;",
"vv24:9.3": "Adāsiṃ ujubhūtesu,",
"vv24:9.4": "vippasannena cetasā.",
"vv24:10.1": "Cātuddasiṃ pañcadasiṃ,",
"vv24:10.2": "yā ca pakkhassa aṭṭhamī;",
"vv24:10.3": "Pāṭihāriyapakkhañca,",
"vv24:10.4": "aṭṭhaṅgasusamāgataṃ.",
"vv24:11.1": "Uposathaṃ upavasissaṃ,",
"vv24:11.2": "sadā sīlesu saṃvutā;",
"vv24:11.3": "Saññamā saṃvibhāgā ca,",
"vv24:11.4": "vimānaṃ āvasāmahaṃ.",
"vv24:12.1": "Pāṇātipātā viratā,",
"vv24:12.2": "musāvādā ca saññatā;",
"vv24:12.3": "Theyyā ca aticārā ca,",
"vv24:12.4": "majjapānā ca ārakā.",
"vv24:13.1": "Pañcasikkhāpade ratā,",
"vv24:13.2": "ariyasaccāna kovidā;",
"vv24:13.3": "Upāsikā cakkhumato,",
"vv24:13.4": "gotamassa yasassino.",
"vv24:14.1": "Tena metādiso vaṇṇo, … pe …",
"vv24:14.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv24:15.1": "“Abhikkhaṇaṃ nandanaṃ sutvā,",
"vv24:15.2": "Chando me udapajjatha;",
"vv24:15.3": "Tattha cittaṃ paṇidhāya,",
"vv24:15.4": "Upapannāmhi nandanaṃ.",
"vv24:16.1": "Nākāsiṃ satthu vacanaṃ,",
"vv24:16.2": "buddhassādiccabandhuno;",
"vv24:16.3": "Hīne cittaṃ paṇidhāya,",
"vv24:16.4": "sāmhi pacchānutāpinī”ti.",
"vv24:17.1": "“Kīva ciraṃ vimānamhi,",
"vv24:17.2": "idha vacchasuposathe;",
"vv24:17.3": "Devate pucchitācikkha,",
"vv24:17.4": "yadi jānāsi āyuno”ti.",
"vv24:18.1": "“Saṭṭhi vassasahassāni,",
"vv24:18.2": "tisso ca vassakoṭiyo;",
"vv24:18.3": "Idha ṭhatvā mahāmuni,",
"vv24:18.4": "ito cutā gamissāmi;",
"vv24:18.5": "Manussānaṃ sahabyatan”ti.",
"vv24:19.1": "“Mā tvaṃ uposathe bhāyi,",
"vv24:19.2": "sambuddhenāsi byākatā;",
"vv24:19.3": "Sotāpannā visesayi,",
"vv24:19.4": "pahīnā tava duggatī”ti.",
"vv24:20.1": "Uposathāvimānaṃ sattamaṃ."
}