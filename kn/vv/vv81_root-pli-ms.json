{
"vv81:1.1": "Vimānavatthu",
"vv81:2.1": "Purisavimāna",
"vv81:3.1": "Sunikkhittavagga",
"vv81:4.1": "7. Kaṇḍakavimānavatthu",
"vv81:5.1": "“Puṇṇamāse yathā cando,",
"vv81:5.2": "nakkhattaparivārito;",
"vv81:5.3": "Samantā anupariyāti,",
"vv81:5.4": "tārakādhipatī sasī.",
"vv81:6.1": "Tathūpamaṃ idaṃ byamhaṃ,",
"vv81:6.2": "dibbaṃ devapuramhi ca;",
"vv81:6.3": "Atirocati vaṇṇena,",
"vv81:6.4": "udayantova raṃsimā.",
"vv81:7.1": "Veḷuriyasuvaṇṇassa,",
"vv81:7.2": "phalikā rūpiyassa ca;",
"vv81:7.3": "Masāragallamuttāhi,",
"vv81:7.4": "lohitaṅgamaṇīhi ca.",
"vv81:8.1": "Citrā manoramā bhūmi,",
"vv81:8.2": "veḷūriyassa santhatā;",
"vv81:8.3": "Kūṭāgārā subhā rammā,",
"vv81:8.4": "pāsādo te sumāpito.",
"vv81:9.1": "Rammā ca te pokkharaṇī,",
"vv81:9.2": "puthulomanisevitā;",
"vv81:9.3": "Acchodakā vippasannā,",
"vv81:9.4": "sovaṇṇavālukasanthatā.",
"vv81:10.1": "Nānāpadumasañchannā,",
"vv81:10.2": "puṇḍarīkasamotatā;",
"vv81:10.3": "Surabhiṃ sampavāyanti,",
"vv81:10.4": "manuññā māluteritā.",
"vv81:11.1": "Tassā te ubhato passe,",
"vv81:11.2": "vanagumbā sumāpitā;",
"vv81:11.3": "Upetā puppharukkhehi,",
"vv81:11.4": "phalarukkhehi cūbhayaṃ.",
"vv81:12.1": "Sovaṇṇapāde pallaṅke,",
"vv81:12.2": "muduke gonakatthate;",
"vv81:12.3": "Nisinnaṃ devarājaṃva,",
"vv81:12.4": "upatiṭṭhanti accharā.",
"vv81:13.1": "Sabbābharaṇasañchannā,",
"vv81:13.2": "nānāmālāvibhūsitā;",
"vv81:13.3": "Ramenti taṃ mahiddhikaṃ,",
"vv81:13.4": "vasavattīva modasi.",
"vv81:14.1": "Bherisaṅkhamudiṅgāhi,",
"vv81:14.2": "vīṇāhi paṇavehi ca;",
"vv81:14.3": "Ramasi ratisampanno,",
"vv81:14.4": "naccagīte suvādite.",
"vv81:15.1": "Dibbā te vividhā rūpā,",
"vv81:15.2": "dibbā saddā atho rasā;",
"vv81:15.3": "Gandhā ca te adhippetā,",
"vv81:15.4": "phoṭṭhabbā ca manoramā.",
"vv81:16.1": "Tasmiṃ vimāne pavare,",
"vv81:16.2": "devaputta mahappabho;",
"vv81:16.3": "Atirocasi vaṇṇena,",
"vv81:16.4": "udayantova bhāṇumā.",
"vv81:17.1": "Dānassa te idaṃ phalaṃ,",
"vv81:17.2": "atho sīlassa vā pana;",
"vv81:17.3": "Atho añjalikammassa,",
"vv81:17.4": "taṃ me akkhāhi pucchito”.",
"vv81:18.1": "So devaputto attamano, … pe …",
"vv81:18.4": "yassa kammassidaṃ phalaṃ.",
"vv81:19.1": "“Ahaṃ kapilavatthusmiṃ,",
"vv81:19.2": "sākiyānaṃ puruttame;",
"vv81:19.3": "Suddhodanassa puttassa,",
"vv81:19.4": "kaṇḍako sahajo ahaṃ.",
"vv81:20.1": "Yadā so aḍḍharattāyaṃ,",
"vv81:20.2": "bodhāya mabhinikkhami;",
"vv81:20.3": "So maṃ mudūhi pāṇīhi,",
"vv81:20.4": "jāli tambanakhehi ca.",
"vv81:21.1": "Satthiṃ ākoṭayitvāna,",
"vv81:21.2": "vaha sammāti cabravi;",
"vv81:21.3": "Ahaṃ lokaṃ tārayissaṃ,",
"vv81:21.4": "patto sambodhimuttamaṃ.",
"vv81:22.1": "Taṃ me giraṃ suṇantassa,",
"vv81:22.2": "hāso me vipulo ahu;",
"vv81:22.3": "Udaggacitto sumano,",
"vv81:22.4": "abhisīsiṃ tadā ahaṃ.",
"vv81:23.1": "Abhirūḷhañca maṃ ñatvā,",
"vv81:23.2": "sakyaputtaṃ mahāyasaṃ;",
"vv81:23.3": "Udaggacitto mudito,",
"vv81:23.4": "vahissaṃ purisuttamaṃ.",
"vv81:24.1": "Paresaṃ vijitaṃ gantvā,",
"vv81:24.2": "uggatasmiṃ divākare;",
"vv81:24.3": "Mamaṃ channañca ohāya,",
"vv81:24.4": "anapekkho so apakkami.",
"vv81:25.1": "Tassa tambanakhe pāde,",
"vv81:25.2": "jivhāya parilehisaṃ;",
"vv81:25.3": "Gacchantañca mahāvīraṃ,",
"vv81:25.4": "rudamāno udikkhisaṃ.",
"vv81:26.1": "Adassanenahaṃ tassa,",
"vv81:26.2": "sakyaputtassa sirīmato;",
"vv81:26.3": "Alatthaṃ garukābādhaṃ,",
"vv81:26.4": "khippaṃ me maraṇaṃ ahu.",
"vv81:27.1": "Tasseva ānubhāvena,",
"vv81:27.2": "vimānaṃ āvasāmidaṃ;",
"vv81:27.3": "Sabbakāmaguṇopetaṃ,",
"vv81:27.4": "dibbaṃ devapuramhi ca.",
"vv81:28.1": "Yañca me ahuvā hāso,",
"vv81:28.2": "saddaṃ sutvāna bodhiyā;",
"vv81:28.3": "Teneva kusalamūlena,",
"vv81:28.4": "phusissaṃ āsavakkhayaṃ.",
"vv81:29.1": "Sace hi bhante gaccheyyāsi,",
"vv81:29.2": "satthu buddhassa santike;",
"vv81:29.3": "Mamāpi naṃ vacanena,",
"vv81:29.4": "sirasā vajjāsi vandanaṃ.",
"vv81:30.1": "Ahampi daṭṭhuṃ gacchissaṃ,",
"vv81:30.2": "jinaṃ appaṭipuggalaṃ;",
"vv81:30.3": "Dullabhaṃ dassanaṃ hoti,",
"vv81:30.4": "lokanāthāna tādinan”ti.",
"vv81:31.1": "So kataññū katavedī,",
"vv81:31.2": "satthāraṃ upasaṅkami;",
"vv81:31.3": "Sutvā giraṃ cakkhumato,",
"vv81:31.4": "dhammacakkhuṃ visodhayi.",
"vv81:32.1": "Visodhetvā diṭṭhigataṃ,",
"vv81:32.2": "vicikicchaṃ vatāni ca;",
"vv81:32.3": "Vanditvā satthuno pāde,",
"vv81:32.4": "tatthevantaradhāyathāti.",
"vv81:33.1": "Kaṇḍakavimānaṃ sattamaṃ."
}