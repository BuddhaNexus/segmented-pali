{
"vv31:1.1": "Vimānavatthu",
"vv31:2.1": "Itthivimāna",
"vv31:3.1": "Pāricchattakavagga",
"vv31:4.1": "3. Pallaṅkavimānavatthu",
"vv31:5.1": "“Pallaṅkaseṭṭhe maṇisoṇṇacitte,",
"vv31:5.2": "Pupphābhikiṇṇe sayane uḷāre;",
"vv31:5.3": "Tatthacchasi devi mahānubhāve,",
"vv31:5.4": "Uccāvacā iddhi vikubbamānā.",
"vv31:6.1": "Imā ca te accharāyo samantato,",
"vv31:6.2": "Naccanti gāyanti pamodayanti;",
"vv31:6.3": "Deviddhipattāsi mahānubhāve,",
"vv31:6.4": "Manussabhūtā kimakāsi puññaṃ;",
"vv31:6.5": "Kenāsi evaṃ jalitānubhāvā,",
"vv31:6.6": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv31:7.1": "“Ahaṃ manussesu manussabhūtā,",
"vv31:7.2": "Aḍḍhe kule suṇisā ahosiṃ;",
"vv31:7.3": "Akkodhanā bhattuvasānuvattinī,",
"vv31:7.4": "Uposathe appamattā ahosiṃ.",
"vv31:8.1": "Manussabhūtā daharā apāpikā,",
"vv31:8.2": "Pasannacittā patimābhirādhayiṃ;",
"vv31:8.3": "Divā ca ratto ca manāpacārinī,",
"vv31:8.4": "Ahaṃ pure sīlavatī ahosiṃ.",
"vv31:9.1": "Pāṇātipātā viratā acorikā,",
"vv31:9.2": "Saṃsuddhakāyā sucibrahmacārinī;",
"vv31:9.3": "Amajjapā no ca musā abhāṇiṃ,",
"vv31:9.4": "Sikkhāpadesu paripūrakārinī.",
"vv31:10.1": "Cātuddasiṃ pañcadasiṃ,",
"vv31:10.2": "yā ca pakkhassa aṭṭhamī;",
"vv31:10.3": "Pāṭihāriyapakkhañca,",
"vv31:10.4": "pasannamānasā ahaṃ.",
"vv31:11.1": "Aṭṭhaṅgupetaṃ anudhammacārinī,",
"vv31:11.2": "Uposathaṃ pītimanā upāvasiṃ;",
"vv31:11.3": "Imañca ariyaṃ aṭṭhaṅgavarehupetaṃ,",
"vv31:11.4": "Samādiyitvā kusalaṃ sukhudrayaṃ;",
"vv31:11.5": "Patimhi kalyāṇī vasānuvattinī,",
"vv31:11.6": "Ahosiṃ pubbe sugatassa sāvikā.",
"vv31:12.1": "Etādisaṃ kusalaṃ jīvaloke,",
"vv31:12.2": "Kammaṃ karitvāna visesabhāginī;",
"vv31:12.3": "Kāyassa bhedā abhisamparāyaṃ,",
"vv31:12.4": "Deviddhipattā sugatimhi āgatā.",
"vv31:13.1": "Vimānapāsādavare manorame,",
"vv31:13.2": "Parivāritā accharāsaṅgaṇena;",
"vv31:13.3": "Sayaṃpabhā devagaṇā ramenti maṃ,",
"vv31:13.4": "Dīghāyukiṃ devavimānamāgatan”ti.",
"vv31:14.1": "Pallaṅkavimānaṃ tatiyaṃ."
}