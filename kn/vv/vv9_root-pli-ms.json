{
"vv9:1.1": "Vimānavatthu",
"vv9:2.1": "Itthivimāna",
"vv9:3.1": "Pīṭhavagga",
"vv9:4.1": "9. Dīpavimānavatthu",
"vv9:5.1": "“Abhikkantena vaṇṇena,",
"vv9:5.2": "yā tvaṃ tiṭṭhasi devate;",
"vv9:5.3": "Obhāsentī disā sabbā,",
"vv9:5.4": "osadhī viya tārakā.",
"vv9:6.1": "Kena tetādiso vaṇṇo,",
"vv9:6.2": "kena te idha mijjhati;",
"vv9:6.3": "Uppajjanti ca te bhogā,",
"vv9:6.4": "ye keci manaso piyā.",
"vv9:7.1": "Kena tvaṃ vimalobhāsā,",
"vv9:7.2": "atirocasi devatā;",
"vv9:7.3": "Kena te sabbagattehi,",
"vv9:7.4": "sabbā obhāsate disā.",
"vv9:8.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv9:8.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv9:8.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv9:8.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv9:9.1": "Sā devatā attamanā,",
"vv9:9.2": "moggallānena pucchitā;",
"vv9:9.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv9:9.4": "yassa kammassidaṃ phalaṃ.",
"vv9:10.1": "“Ahaṃ manussesu manussabhūtā,",
"vv9:10.2": "Purimāya jātiyā manussaloke;",
"vv9:10.3": "Tamandhakāramhi timīsikāyaṃ,",
"vv9:10.4": "Padīpakālamhi adāsi dīpaṃ.",
"vv9:11.1": "Yo andhakāramhi timīsikāyaṃ,",
"vv9:11.2": "Padīpakālamhi dadāti dīpaṃ;",
"vv9:11.3": "Upapajjati jotirasaṃ vimānaṃ,",
"vv9:11.4": "Pahūtamalyaṃ bahupuṇḍarīkaṃ.",
"vv9:12.1": "Tena metādiso vaṇṇo,",
"vv9:12.2": "tena me idha mijjhati;",
"vv9:12.3": "Uppajjanti ca me bhogā,",
"vv9:12.4": "ye keci manaso piyā.",
"vv9:13.1": "Tenāhaṃ vimalobhāsā,",
"vv9:13.2": "atirocāmi devatā;",
"vv9:13.3": "Tena me sabbagattehi,",
"vv9:13.4": "sabbā obhāsate disā.",
"vv9:14.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv9:14.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv9:14.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv9:14.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv9:15.1": "Dīpavimānaṃ navamaṃ."
}