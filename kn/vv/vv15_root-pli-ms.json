{
"vv15:1.1": "Vimānavatthu",
"vv15:2.1": "Itthivimāna",
"vv15:3.1": "Pīṭhavagga",
"vv15:4.1": "15. Uttarāvimānavatthu",
"vv15:5.1": "“Abhikkantena vaṇṇena,",
"vv15:5.2": "yā tvaṃ tiṭṭhasi devate;",
"vv15:5.3": "Obhāsentī disā sabbā,",
"vv15:5.4": "osadhī viya tārakā.",
"vv15:6.1": "Kena tetādiso vaṇṇo,",
"vv15:6.2": "kena te idha mijjhati;",
"vv15:6.3": "Uppajjanti ca te bhogā,",
"vv15:6.4": "ye keci manaso piyā.",
"vv15:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv15:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv15:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv15:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv15:8.1": "Sā devatā attamanā,",
"vv15:8.2": "moggallānena pucchitā;",
"vv15:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv15:8.4": "yassa kammassidaṃ phalaṃ.",
"vv15:9.1": "“Issā ca maccheramatho paḷāso,",
"vv15:9.2": "Nāhosi mayhaṃ gharamāvasantiyā;",
"vv15:9.3": "Akkodhanā bhattu vasānuvattinī,",
"vv15:9.4": "Uposathe niccahamappamattā.",
"vv15:10.1": "Cātuddasiṃ pañcadasiṃ,",
"vv15:10.2": "yā ca pakkhassa aṭṭhamī;",
"vv15:10.3": "Pāṭihāriyapakkhañca,",
"vv15:10.4": "aṭṭhaṅgasusamāgataṃ.",
"vv15:11.1": "Uposathaṃ upavasissaṃ,",
"vv15:11.2": "sadā sīlesu saṃvutā;",
"vv15:11.3": "Saññamā saṃvibhāgā ca,",
"vv15:11.4": "vimānaṃ āvasāmahaṃ.",
"vv15:12.1": "Pāṇātipātā viratā,",
"vv15:12.2": "musāvādā ca saññatā;",
"vv15:12.3": "Theyyā ca aticārā ca,",
"vv15:12.4": "majjapānā ca ārakā.",
"vv15:13.1": "Pañcasikkhāpade ratā,",
"vv15:13.2": "ariyasaccāna kovidā;",
"vv15:13.3": "Upāsikā cakkhumato,",
"vv15:13.4": "gotamassa yasassino.",
"vv15:14.1": "Sāhaṃ sakena sīlena,",
"vv15:14.2": "yasasā ca yasassinī;",
"vv15:14.3": "Anubhomi sakaṃ puññaṃ,",
"vv15:14.4": "sukhitā camhināmayā.",
"vv15:15.1": "Tena metādiso vaṇṇo,",
"vv15:15.2": "tena me idha mijjhati;",
"vv15:15.3": "Uppajjanti ca me bhogā,",
"vv15:15.4": "ye keci manaso piyā.",
"vv15:16.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv15:16.2": "Manussabhūtā yamahaṃ akāsiṃ;",
"vv15:16.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv15:16.4": "Vaṇṇo ca me sabbadisā pabhāsatīti.",
"vv15:17.1": "Mama ca, bhante, vacanena bhagavato pāde sirasā vandeyyāsi—",
"vv15:17.2": "‘uttarā nāma, bhante, upāsikā bhagavato pāde sirasā vandatī’ti.",
"vv15:17.3": "Anacchariyaṃ kho panetaṃ, bhante, yaṃ maṃ bhagavā aññatarasmiṃ sāmaññaphale byākareyya, taṃ bhagavā sakadāgāmiphale byākāsī”ti.",
"vv15:18.1": "Uttarāvimānaṃ pannarasamaṃ."
}