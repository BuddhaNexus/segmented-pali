{
"vv17:1.1": "Vimānavatthu",
"vv17:2.1": "Itthivimāna",
"vv17:3.1": "Pīṭhavagga",
"vv17:4.1": "17. Kesakārīvimānavatthu",
"vv17:5.1": "“Idaṃ vimānaṃ ruciraṃ pabhassaraṃ,",
"vv17:5.2": "Veḷuriyathambhaṃ satataṃ sunimmitaṃ;",
"vv17:5.3": "Suvaṇṇarukkhehi samantamotthataṃ,",
"vv17:5.4": "Ṭhānaṃ mamaṃ kammavipākasambhavaṃ.",
"vv17:6.1": "Tatrūpapannā purimaccharā imā,",
"vv17:6.2": "Sataṃ sahassāni sakena kammunā;",
"vv17:6.3": "Tuvaṃsi ajjhupagatā yasassinī,",
"vv17:6.4": "Obhāsayaṃ tiṭṭhasi pubbadevatā.",
"vv17:7.1": "Sasī adhiggayha yathā virocati,",
"vv17:7.2": "Nakkhattarājāriva tārakāgaṇaṃ;",
"vv17:7.3": "Tatheva tvaṃ accharāsaṅgaṇaṃ imaṃ,",
"vv17:7.4": "Daddallamānā yasasā virocasi.",
"vv17:8.1": "Kuto nu āgamma anomadassane,",
"vv17:8.2": "Upapannā tvaṃ bhavanaṃ mamaṃ idaṃ;",
"vv17:8.3": "Brahmaṃva devā tidasā sahindakā,",
"vv17:8.4": "Sabbe na tappāmase dassanena tan”ti.",
"vv17:9.1": "“Yametaṃ sakka anupucchase mamaṃ,",
"vv17:9.2": "‘Kuto cutā tvaṃ idha āgatā’ti;",
"vv17:9.3": "Bārāṇasī nāma puratthi kāsinaṃ,",
"vv17:9.4": "Tattha ahosiṃ pure kesakārikā.",
"vv17:10.1": "Buddhe ca dhamme ca pasannamānasā,",
"vv17:10.2": "Saṃghe ca ekantagatā asaṃsayā;",
"vv17:10.3": "Akhaṇḍasikkhāpadā āgatapphalā,",
"vv17:10.4": "Sambodhidhamme niyatā anāmayā”ti.",
"vv17:11.1": "“Tantyābhinandāmase svāgatañca te,",
"vv17:11.2": "Dhammena ca tvaṃ yasasā virocasi;",
"vv17:11.3": "Buddhe ca dhamme ca pasannamānase,",
"vv17:11.4": "Saṃghe ca ekantagate asaṃsaye;",
"vv17:11.5": "Akhaṇḍasikkhāpade āgatapphale,",
"vv17:11.6": "Sambodhidhamme niyate anāmaye”ti.",
"vv17:12.1": "Kesakārīvimānaṃ sattarasamaṃ.",
"vv17:13.1": "Tassuddānaṃ",
"vv17:14.1": "Pañca pīṭhā tayo nāvā,",
"vv17:14.2": "dīpatiladakkhiṇā dve;",
"vv17:14.3": "Pati dve suṇisā uttarā,",
"vv17:14.4": "sirimā kesakārikā;",
"vv17:14.5": "Vaggo tena pavuccatīti.",
"vv17:15.1": "Itthivimāne paṭhamo vaggo."
}