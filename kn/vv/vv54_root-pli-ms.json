{
"vv54:1.1": "Vimānavatthu",
"vv54:2.1": "Purisavimāna",
"vv54:3.1": "Mahārathavagga",
"vv54:4.1": "4. Kakkaṭakarasadāyakavimānavatthu",
"vv54:5.1": "“Uccamidaṃ maṇithūṇaṃ vimānaṃ,",
"vv54:5.2": "Samantato dvādasa yojanāni;",
"vv54:5.3": "Kūṭāgārā sattasatā uḷārā,",
"vv54:5.4": "Veḷuriyathambhā rucakatthatā subhā.",
"vv54:6.1": "Tatthacchasi pivasi khādasi ca,",
"vv54:6.2": "Dibbā ca vīṇā pavadanti vagguṃ;",
"vv54:6.3": "Dibbā rasā kāmaguṇettha pañca,",
"vv54:6.4": "Nāriyo ca naccanti suvaṇṇachannā.",
"vv54:7.1": "Kena tetādiso vaṇṇo,",
"vv54:7.2": "kena te idha mijjhati;",
"vv54:7.3": "Uppajjanti ca te bhogā,",
"vv54:7.4": "ye keci manaso piyā.",
"vv54:8.1": "Pucchāmi taṃ deva mahānubhāva,",
"vv54:8.2": "Manussabhūto kimakāsi puññaṃ;",
"vv54:8.3": "Kenāsi evaṃ jalitānubhāvo,",
"vv54:8.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv54:9.1": "So devaputto attamano,",
"vv54:9.2": "moggallānena pucchito;",
"vv54:9.3": "Pañhaṃ puṭṭho viyākāsi,",
"vv54:9.4": "yassa kammassidaṃ phalaṃ.",
"vv54:10.1": "“Satisamuppādakaro,",
"vv54:10.2": "dvāre kakkaṭako ṭhito;",
"vv54:10.3": "Niṭṭhito jātarūpassa,",
"vv54:10.4": "sobhati dasapādako.",
"vv54:11.1": "Tena metādiso vaṇṇo,",
"vv54:11.2": "tena me idha mijjhati;",
"vv54:11.3": "Uppajjanti ca me bhogā,",
"vv54:11.4": "ye keci manaso piyā.",
"vv54:12.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv54:12.2": "Manussabhūto yamakāsi puññaṃ;",
"vv54:12.3": "Tenamhi evaṃ jalitānubhāvo,",
"vv54:12.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv54:13.1": "Kakkaṭakarasadāyakavimānaṃ catutthaṃ.",
"vv54:14.1": "(Anantaraṃ pañcavimānaṃ yathā kakkaṭakarasadāyakavimānaṃ tathā vitthāretabbaṃ.)"
}