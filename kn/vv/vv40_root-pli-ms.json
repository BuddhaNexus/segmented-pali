{
"vv40:1.1": "Vimānavatthu",
"vv40:2.1": "Itthivimāna",
"vv40:3.1": "Mañjiṭṭhakavagga",
"vv40:4.1": "2. Pabhassaravimānavatthu",
"vv40:5.1": "“Pabhassaravaravaṇṇanibhe,",
"vv40:5.2": "Surattavatthavasane;",
"vv40:5.3": "Mahiddhike candanaruciragatte,",
"vv40:5.4": "Kā tvaṃ subhe devate vandase mamaṃ.",
"vv40:6.1": "Pallaṅko ca te mahaggho,",
"vv40:6.2": "Nānāratanacittito ruciro;",
"vv40:6.3": "Yattha tvaṃ nisinnā virocasi,",
"vv40:6.4": "Devarājāriva nandane vane.",
"vv40:7.1": "Kiṃ tvaṃ pure sucaritamācarī bhadde,",
"vv40:7.2": "Kissa kammassa vipākaṃ;",
"vv40:7.3": "Anubhosi devalokasmiṃ,",
"vv40:7.4": "Devate pucchitācikkha;",
"vv40:7.5": "Kissa kammassidaṃ phalan”ti.",
"vv40:8.1": "“Piṇḍāya te carantassa,",
"vv40:8.2": "Mālaṃ phāṇitañca adadaṃ bhante;",
"vv40:8.3": "Tassa kammassidaṃ vipākaṃ,",
"vv40:8.4": "Anubhomi devalokasmiṃ.",
"vv40:9.1": "Hoti ca me anutāpo,",
"vv40:9.2": "Aparaddhaṃ dukkhitañca me bhante;",
"vv40:9.3": "Sāhaṃ dhammaṃ nāssosiṃ,",
"vv40:9.4": "Sudesitaṃ dhammarājena.",
"vv40:10.1": "Taṃ taṃ vadāmi bhaddante,",
"vv40:10.2": "‘Yassa me anukampiyo koci;",
"vv40:10.3": "Dhammesu taṃ samādapetha’,",
"vv40:10.4": "Sudesitaṃ dhammarājena.",
"vv40:11.1": "Yesaṃ atthi saddhā buddhe,",
"vv40:11.2": "dhamme ca saṃgharatane;",
"vv40:11.3": "Te maṃ ativirocanti,",
"vv40:11.4": "āyunā yasasā siriyā.",
"vv40:12.1": "Patāpena vaṇṇena uttaritarā,",
"vv40:12.2": "Aññe mahiddhikatarā mayā devā”ti.",
"vv40:13.1": "Pabhassaravimānaṃ dutiyaṃ."
}