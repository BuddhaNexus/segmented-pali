{
"vv43:1.1": "Vimānavatthu",
"vv43:2.1": "Itthivimāna",
"vv43:3.1": "Mañjiṭṭhakavagga",
"vv43:4.1": "5. Kañjikadāyikāvimānavatthu",
"vv43:5.1": "“Abhikkantena vaṇṇena, … pe …",
"vv43:5.4": "osadhī viya tārakā.",
"vv43:6.1": "Kena tetādiso vaṇṇo, … pe …",
"vv43:6.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv43:7.1": "Sā devatā attamanā, … pe …",
"vv43:7.4": "yassa kammassidaṃ phalaṃ.",
"vv43:8.1": "“Ahaṃ andhakavindamhi,",
"vv43:8.2": "buddhassādiccabandhuno;",
"vv43:8.3": "Adāsiṃ kolasampākaṃ,",
"vv43:8.4": "kañjikaṃ teladhūpitaṃ.",
"vv43:9.1": "Pipphalyā lasuṇena ca,",
"vv43:9.2": "missaṃ lāmañjakena ca;",
"vv43:9.3": "Adāsiṃ ujubhūtasmiṃ,",
"vv43:9.4": "vippasannena cetasā.",
"vv43:10.1": "Yā mahesittaṃ kāreyya,",
"vv43:10.2": "cakkavattissa rājino;",
"vv43:10.3": "Nārī sabbaṅgakalyāṇī,",
"vv43:10.4": "bhattu cānomadassikā;",
"vv43:10.5": "Ekassa kañjikadānassa,",
"vv43:10.6": "kalaṃ nāgghati soḷasiṃ.",
"vv43:11.1": "Sataṃ nikkhā sataṃ assā,",
"vv43:11.2": "sataṃ assatarīrathā;",
"vv43:11.3": "Sataṃ kaññāsahassāni,",
"vv43:11.4": "āmuttamaṇikuṇḍalā;",
"vv43:11.5": "Ekassa kañjikadānassa,",
"vv43:11.6": "kalaṃ nāgghanti soḷasiṃ.",
"vv43:12.1": "Sataṃ hemavatā nāgā,",
"vv43:12.2": "īsādantā urūḷhavā;",
"vv43:12.3": "Suvaṇṇakacchā mātaṅgā,",
"vv43:12.4": "hemakappanavāsasā;",
"vv43:12.5": "Ekassa kañjikadānassa,",
"vv43:12.6": "kalaṃ nāgghanti soḷasiṃ.",
"vv43:13.1": "Catunnamapi dīpānaṃ,",
"vv43:13.2": "issaraṃ yodha kāraye;",
"vv43:13.3": "Ekassa kañjikadānassa,",
"vv43:13.4": "kalaṃ nāgghati soḷasin”ti.",
"vv43:14.1": "Kañjikadāyikāvimānaṃ pañcamaṃ."
}