{
"vv48:1.1": "Vimānavatthu",
"vv48:2.1": "Itthivimāna",
"vv48:3.1": "Mañjiṭṭhakavagga",
"vv48:4.1": "10. Ucchuvimānavatthu",
"vv48:5.1": "“Obhāsayitvā pathaviṃ sadevakaṃ,",
"vv48:5.2": "Atirocasi candimasūriyā viya;",
"vv48:5.3": "Siriyā ca vaṇṇena yasena tejasā,",
"vv48:5.4": "Brahmāva deve tidase sahindake.",
"vv48:6.1": "Pucchāmi taṃ uppalamāladhārinī,",
"vv48:6.2": "Āveḷinī kañcanasannibhattace;",
"vv48:6.3": "Alaṅkate uttamavatthadhārinī,",
"vv48:6.4": "Kā tvaṃ subhe devate vandase mamaṃ.",
"vv48:7.1": "Kiṃ tvaṃ pure kammamakāsi attanā,",
"vv48:7.2": "Manussabhūtā purimāya jātiyā;",
"vv48:7.3": "Dānaṃ suciṇṇaṃ atha sīlasaññamaṃ,",
"vv48:7.4": "Kenupapannā sugatiṃ yasassinī;",
"vv48:7.5": "Devate pucchitācikkha,",
"vv48:7.6": "Kissa kammassidaṃ phalan”ti.",
"vv48:8.1": "“Idāni bhante imameva gāmaṃ,",
"vv48:8.2": "Piṇḍāya amhāka gharaṃ upāgami;",
"vv48:8.3": "Tato te ucchussa adāsi khaṇḍikaṃ,",
"vv48:8.4": "Pasannacittā atulāya pītiyā.",
"vv48:9.1": "Sassu ca pacchā anuyuñjate mamaṃ,",
"vv48:9.2": "Kahaṃ nu ucchuṃ vadhuke avākiri;",
"vv48:9.3": "Na chaḍḍitaṃ no pana khāditaṃ mayā,",
"vv48:9.4": "Santassa bhikkhussa sayaṃ adāsahaṃ.",
"vv48:10.1": "Tuyhaṃ nvidaṃ issariyaṃ atho mama,",
"vv48:10.2": "Itissā sassu paribhāsate mamaṃ;",
"vv48:10.3": "Leḍḍuṃ gahetvā pahāraṃ adāsi me,",
"vv48:10.4": "Tato cutā kālakatāmhi devatā.",
"vv48:11.1": "Tadeva kammaṃ kusalaṃ kataṃ mayā,",
"vv48:11.2": "Sukhañca kammaṃ anubhomi attanā;",
"vv48:11.3": "Devehi saddhiṃ paricārayāmahaṃ,",
"vv48:11.4": "Modāmahaṃ kāmaguṇehi pañcahi.",
"vv48:12.1": "Tadeva kammaṃ kusalaṃ kataṃ mayā,",
"vv48:12.2": "Sukhañca kammaṃ anubhomi attanā;",
"vv48:12.3": "Devindaguttā tidasehi rakkhitā,",
"vv48:12.4": "Samappitā kāmaguṇehi pañcahi.",
"vv48:13.1": "Etādisaṃ puññaphalaṃ anappakaṃ,",
"vv48:13.2": "Mahāvipākā mama ucchudakkhiṇā;",
"vv48:13.3": "Devehi saddhiṃ paricārayāmahaṃ,",
"vv48:13.4": "Modāmahaṃ kāmaguṇehi pañcahi.",
"vv48:14.1": "Etādisaṃ puññaphalaṃ anappakaṃ,",
"vv48:14.2": "Mahājutikā mama ucchudakkhiṇā;",
"vv48:14.3": "Devindaguttā tidasehi rakkhitā,",
"vv48:14.4": "Sahassanettoriva nandane vane.",
"vv48:15.1": "Tuvañca bhante anukampakaṃ viduṃ,",
"vv48:15.2": "Upecca vandiṃ kusalañca pucchisaṃ;",
"vv48:15.3": "Tato te ucchussa adāsiṃ khaṇḍikaṃ,",
"vv48:15.4": "Pasannacittā atulāya pītiyā”ti.",
"vv48:16.1": "Ucchuvimānaṃ dasamaṃ."
}