{
"vv67:1.1": "Vimānavatthu",
"vv67:2.1": "Purisavimāna",
"vv67:3.1": "Pāyāsivagga",
"vv67:4.1": "3. Phaladāyakavimānavatthu",
"vv67:5.1": "“Uccamidaṃ maṇithūṇaṃ vimānaṃ,",
"vv67:5.2": "Samantato soḷasa yojanāni;",
"vv67:5.3": "Kūṭāgārā sattasatā uḷārā,",
"vv67:5.4": "Veḷuriyathambhā rucakatthatā subhā.",
"vv67:6.1": "Tatthacchasi pivasi khādasi ca,",
"vv67:6.2": "Dibbā ca vīṇā pavadanti vagguṃ;",
"vv67:6.3": "Aṭṭhaṭṭhakā sikkhitā sādhurūpā,",
"vv67:6.4": "Dibbā ca kaññā tidasacarā uḷārā;",
"vv67:6.5": "Naccanti gāyanti pamodayanti.",
"vv67:7.1": "Deviddhipattosi mahānubhāvo,",
"vv67:7.2": "Manussabhūto kimakāsi puññaṃ;",
"vv67:7.3": "Kenāsi evaṃ jalitānubhāvo,",
"vv67:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv67:8.1": "So devaputto attamano, … pe …",
"vv67:8.4": "Yassa kammassidaṃ phalaṃ.",
"vv67:9.1": "“Phaladāyī phalaṃ vipulaṃ labhati,",
"vv67:9.2": "Dadamujugatesu pasannamānaso;",
"vv67:9.3": "So hi pamodati saggagato tidive,",
"vv67:9.4": "Anubhoti ca puññaphalaṃ vipulaṃ.",
"vv67:10.1": "Tavevāhaṃ mahāmuni,",
"vv67:10.2": "Adāsiṃ caturo phale.",
"vv67:11.1": "Tasmā hi phalaṃ alameva dātuṃ,",
"vv67:11.2": "Niccaṃ manussena sukhatthikena;",
"vv67:11.3": "Dibbāni vā patthayatā sukhāni,",
"vv67:11.4": "Manussasobhaggatamicchatā vā.",
"vv67:12.1": "Tena metādiso vaṇṇo, … pe …",
"vv67:12.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv67:13.1": "Phaladāyakavimānaṃ tatiyaṃ."
}