{
"vv47:1.1": "Vimānavatthu",
"vv47:2.1": "Itthivimāna",
"vv47:3.1": "Mañjiṭṭhakavagga",
"vv47:4.1": "9. Pītavimānavatthu",
"vv47:5.1": "“Pītavatthe pītadhaje,",
"vv47:5.2": "pītālaṅkārabhūsite;",
"vv47:5.3": "Pītacandanalittaṅge,",
"vv47:5.4": "pītauppalamālinī.",
"vv47:6.1": "Pītapāsādasayane,",
"vv47:6.2": "pītāsane pītabhājane;",
"vv47:6.3": "Pītachatte pītarathe,",
"vv47:6.4": "pītasse pītabījane.",
"vv47:7.1": "Kiṃ kammamakarī bhadde,",
"vv47:7.2": "pubbe mānusake bhave;",
"vv47:7.3": "Devate pucchitācikkha,",
"vv47:7.4": "kissa kammassidaṃ phalan”ti.",
"vv47:8.1": "“Kosātakī nāma latatthi bhante,",
"vv47:8.2": "Tittikā anabhicchitā;",
"vv47:8.3": "Tassā cattāri pupphāni,",
"vv47:8.4": "Thūpaṃ abhihariṃ ahaṃ.",
"vv47:9.1": "Satthu sarīramuddissa,",
"vv47:9.2": "vippasannena cetasā;",
"vv47:9.3": "Nāssa maggaṃ avekkhissaṃ,",
"vv47:9.4": "na taggamanasā satī.",
"vv47:10.1": "Tato maṃ avadhī gāvī,",
"vv47:10.2": "thūpaṃ apattamānasaṃ;",
"vv47:10.3": "Tañcāhaṃ abhisañceyyaṃ,",
"vv47:10.4": "bhiyyo nūna ito siyā.",
"vv47:11.1": "Tena kammena devinda,",
"vv47:11.2": "maghavā devakuñjara;",
"vv47:11.3": "Pahāya mānusaṃ dehaṃ,",
"vv47:11.4": "tava sahabyamāgatā”ti.",
"vv47:12.1": "Idaṃ sutvā tidasādhipati,",
"vv47:12.2": "Maghavā devakuñjaro;",
"vv47:12.3": "Tāvatiṃse pasādento,",
"vv47:12.4": "Mātaliṃ etadabravi.",
"vv47:13.1": "“Passa mātali accheraṃ,",
"vv47:13.2": "cittaṃ kammaphalaṃ idaṃ;",
"vv47:13.3": "Appakampi kataṃ deyyaṃ,",
"vv47:13.4": "puññaṃ hoti mahapphalaṃ.",
"vv47:14.1": "Natthi citte pasannamhi,",
"vv47:14.2": "appakā nāma dakkhiṇā;",
"vv47:14.3": "Tathāgate vā sambuddhe,",
"vv47:14.4": "atha vā tassa sāvake.",
"vv47:15.1": "Ehi mātali amhepi,",
"vv47:15.2": "bhiyyo bhiyyo mahemase;",
"vv47:15.3": "Tathāgatassa dhātuyo,",
"vv47:15.4": "sukho puññāna muccayo.",
"vv47:16.1": "Tiṭṭhante nibbute cāpi,",
"vv47:16.2": "same citte samaṃ phalaṃ;",
"vv47:16.3": "Cetopaṇidhihetu hi,",
"vv47:16.4": "sattā gacchanti suggatiṃ.",
"vv47:17.1": "Bahūnaṃ vata atthāya,",
"vv47:17.2": "uppajjanti tathāgatā;",
"vv47:17.3": "Yattha kāraṃ karitvāna,",
"vv47:17.4": "saggaṃ gacchanti dāyakā”ti.",
"vv47:18.1": "Pītavimānaṃ navamaṃ."
}