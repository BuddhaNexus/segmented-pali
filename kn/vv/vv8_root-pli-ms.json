{
"vv8:1.1": "Vimānavatthu",
"vv8:2.1": "Itthivimāna",
"vv8:3.1": "Pīṭhavagga",
"vv8:4.1": "8. Tatiyanāvāvimānavatthu",
"vv8:5.1": "“Suvaṇṇacchadanaṃ nāvaṃ,",
"vv8:5.2": "Nāri āruyha tiṭṭhasi;",
"vv8:5.3": "Ogāhasi pokkharaṇiṃ,",
"vv8:5.4": "Padmaṃ chindasi pāṇinā.",
"vv8:6.1": "Kūṭāgārā nivesā te,",
"vv8:6.2": "vibhattā bhāgaso mitā;",
"vv8:6.3": "Daddallamānā ābhanti,",
"vv8:6.4": "samantā caturo disā.",
"vv8:7.1": "Kena tetādiso vaṇṇo,",
"vv8:7.2": "kena te idha mijjhati;",
"vv8:7.3": "Uppajjanti ca te bhogā,",
"vv8:7.4": "ye keci manaso piyā.",
"vv8:8.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv8:8.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv8:8.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv8:8.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv8:9.1": "Sā devatā attamanā,",
"vv8:9.2": "sambuddheneva pucchitā;",
"vv8:9.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv8:9.4": "yassa kammassidaṃ phalaṃ.",
"vv8:10.1": "“Ahaṃ manussesu manussabhūtā,",
"vv8:10.2": "Purimāya jātiyā manussaloke;",
"vv8:10.3": "Disvāna bhikkhū tasite kilante,",
"vv8:10.4": "Uṭṭhāya pātuṃ udakaṃ adāsiṃ.",
"vv8:11.1": "Yo ve kilantāna pipāsitānaṃ,",
"vv8:11.2": "Uṭṭhāya pātuṃ udakaṃ dadāti;",
"vv8:11.3": "Sītodakā tassa bhavanti najjo,",
"vv8:11.4": "Pahūtamalyā bahupuṇḍarīkā.",
"vv8:12.1": "Taṃ āpagā anupariyanti sabbadā,",
"vv8:12.2": "Sītodakā vālukasanthatā nadī;",
"vv8:12.3": "Ambā ca sālā tilakā ca jambuyo,",
"vv8:12.4": "Uddālakā pāṭaliyo ca phullā.",
"vv8:13.1": "Taṃ bhūmibhāgehi upetarūpaṃ,",
"vv8:13.2": "Vimānaseṭṭhaṃ bhusa sobhamānaṃ;",
"vv8:13.3": "Tassīdha kammassa ayaṃ vipāko,",
"vv8:13.4": "Etādisaṃ puññakatā labhanti.",
"vv8:14.1": "Kūṭāgārā nivesā me,",
"vv8:14.2": "vibhattā bhāgaso mitā;",
"vv8:14.3": "Daddallamānā ābhanti,",
"vv8:14.4": "samantā caturo disā.",
"vv8:15.1": "Tena metādiso vaṇṇo,",
"vv8:15.2": "tena me idha mijjhati;",
"vv8:15.3": "Uppajjanti ca me bhogā,",
"vv8:15.4": "ye keci manaso piyā.",
"vv8:16.1": "Akkhāmi te buddha mahānubhāva,",
"vv8:16.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv8:16.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv8:16.4": "Vaṇṇo ca me sabbadisā pabhāsati;",
"vv8:16.5": "Etassa kammassa phalaṃ mamedaṃ,",
"vv8:16.6": "Atthāya buddho udakaṃ apāyī”ti.",
"vv8:17.1": "Tatiyanāvāvimānaṃ aṭṭhamaṃ."
}