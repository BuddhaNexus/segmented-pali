{
"vv4:1.1": "Vimānavatthu",
"vv4:2.1": "Itthivimāna",
"vv4:3.1": "Pīṭhavagga",
"vv4:4.1": "4. Catutthapīṭhavimānavatthu",
"vv4:5.1": "“Pīṭhaṃ te veḷuriyamayaṃ uḷāraṃ,",
"vv4:5.2": "Manojavaṃ gacchati yenakāmaṃ;",
"vv4:5.3": "Alaṅkate malyadhare suvatthe,",
"vv4:5.4": "Obhāsasi vijjurivabbhakūṭaṃ.",
"vv4:6.1": "Kena tetādiso vaṇṇo,",
"vv4:6.2": "kena te idha mijjhati;",
"vv4:6.3": "Uppajjanti ca te bhogā,",
"vv4:6.4": "ye keci manaso piyā.",
"vv4:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv4:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv4:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv4:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv4:8.1": "Sā devatā attamanā,",
"vv4:8.2": "moggallānena pucchitā;",
"vv4:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv4:8.4": "yassa kammassidaṃ phalaṃ.",
"vv4:9.1": "“Appassa kammassa phalaṃ mamedaṃ,",
"vv4:9.2": "Yenamhi evaṃ jalitānubhāvā;",
"vv4:9.3": "Ahaṃ manussesu manussabhūtā,",
"vv4:9.4": "Purimāya jātiyā manussaloke.",
"vv4:10.1": "Addasaṃ virajaṃ bhikkhuṃ,",
"vv4:10.2": "vippasannamanāvilaṃ;",
"vv4:10.3": "Tassa adāsahaṃ pīṭhaṃ,",
"vv4:10.4": "pasannā sehi pāṇibhi.",
"vv4:11.1": "Tena metādiso vaṇṇo,",
"vv4:11.2": "tena me idha mijjhati;",
"vv4:11.3": "Uppajjanti ca me bhogā,",
"vv4:11.4": "ye keci manaso piyā.",
"vv4:12.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv4:12.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv4:12.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv4:12.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv4:13.1": "Catutthapīṭhavimānaṃ catutthaṃ."
}