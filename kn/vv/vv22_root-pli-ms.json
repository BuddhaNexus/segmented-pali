{
"vv22:1.1": "Vimānavatthu",
"vv22:2.1": "Itthivimāna",
"vv22:3.1": "Cittalatāvagga",
"vv22:4.1": "5. Bhadditthivimānavatthu",
"vv22:5.1": "“Nīlā pītā ca kāḷā ca,",
"vv22:5.2": "mañjiṭṭhā atha lohitā;",
"vv22:5.3": "Uccāvacānaṃ vaṇṇānaṃ,",
"vv22:5.4": "kiñjakkhaparivāritā.",
"vv22:6.1": "Mandāravānaṃ pupphānaṃ,",
"vv22:6.2": "mālaṃ dhāresi muddhani;",
"vv22:6.3": "Nayime aññesu kāyesu,",
"vv22:6.4": "rukkhā santi sumedhase.",
"vv22:7.1": "Kena kāyaṃ upapannā,",
"vv22:7.2": "tāvatiṃsaṃ yasassinī;",
"vv22:7.3": "Devate pucchitācikkha,",
"vv22:7.4": "kissa kammassidaṃ phalan”ti.",
"vv22:8.1": "“Bhadditthikāti maṃ aññaṃsu,",
"vv22:8.2": "Kimilāyaṃ upāsikā;",
"vv22:8.3": "Saddhā sīlena sampannā,",
"vv22:8.4": "Saṃvibhāgaratā sadā.",
"vv22:9.1": "Acchādanañca bhattañca,",
"vv22:9.2": "senāsanaṃ padīpiyaṃ;",
"vv22:9.3": "Adāsiṃ ujubhūtesu,",
"vv22:9.4": "vippasannena cetasā.",
"vv22:10.1": "Cātuddasiṃ pañcadasiṃ,",
"vv22:10.2": "yā ca pakkhassa aṭṭhamī;",
"vv22:10.3": "Pāṭihāriyapakkhañca,",
"vv22:10.4": "aṭṭhaṅgasusamāgataṃ.",
"vv22:11.1": "Uposathaṃ upavasissaṃ,",
"vv22:11.2": "sadā sīlesu saṃvutā;",
"vv22:11.3": "Saññamā saṃvibhāgā ca,",
"vv22:11.4": "vimānaṃ āvasāmahaṃ.",
"vv22:12.1": "Pāṇātipātā viratā,",
"vv22:12.2": "musāvādā ca saññatā;",
"vv22:12.3": "Theyyā ca aticārā ca,",
"vv22:12.4": "majjapānā ca ārakā.",
"vv22:13.1": "Pañcasikkhāpade ratā,",
"vv22:13.2": "Ariyasaccāna kovidā;",
"vv22:13.3": "Upāsikā cakkhumato,",
"vv22:13.4": "Appamādavihārinī;",
"vv22:13.5": "Katāvāsā katakusalā tato cutā,",
"vv22:13.6": "Sayaṃpabhā anuvicarāmi nandanaṃ.",
"vv22:14.1": "Bhikkhū cāhaṃ paramahitānukampake,",
"vv22:14.2": "Abhojayiṃ tapassiyugaṃ mahāmuniṃ;",
"vv22:14.3": "Katāvāsā katakusalā tato cutā,",
"vv22:14.4": "Sayaṃpabhā anuvicarāmi nandanaṃ.",
"vv22:15.1": "Aṭṭhaṅgikaṃ aparimitaṃ sukhāvahaṃ,",
"vv22:15.2": "Uposathaṃ satatamupāvasiṃ ahaṃ;",
"vv22:15.3": "Katāvāsā katakusalā tato cutā,",
"vv22:15.4": "Sayaṃpabhā anuvicarāmi nandanan”ti.",
"vv22:16.1": "Bhadditthivimānaṃ pañcamaṃ."
}