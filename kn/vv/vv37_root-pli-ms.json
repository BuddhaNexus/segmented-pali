{
"vv37:1.1": "Vimānavatthu",
"vv37:2.1": "Itthivimāna",
"vv37:3.1": "Pāricchattakavagga",
"vv37:4.1": "9. Visālakkhivimānavatthu",
"vv37:5.1": "“Kā nāma tvaṃ visālakkhi,",
"vv37:5.2": "ramme cittalatāvane;",
"vv37:5.3": "Samantā anupariyāsi,",
"vv37:5.4": "nārīgaṇapurakkhatā.",
"vv37:6.1": "Yadā devā tāvatiṃsā,",
"vv37:6.2": "pavisanti imaṃ vanaṃ;",
"vv37:6.3": "Sayoggā sarathā sabbe,",
"vv37:6.4": "citrā honti idhāgatā.",
"vv37:7.1": "Tuyhañca idha pattāya,",
"vv37:7.2": "uyyāne vicarantiyā;",
"vv37:7.3": "Kāye na dissatī cittaṃ,",
"vv37:7.4": "kena rūpaṃ tavedisaṃ;",
"vv37:7.5": "Devate pucchitācikkha,",
"vv37:7.6": "kissa kammassidaṃ phalan”ti.",
"vv37:8.1": "“Yena kammena devinda,",
"vv37:8.2": "rūpaṃ mayhaṃ gatī ca me;",
"vv37:8.3": "Iddhi ca ānubhāvo ca,",
"vv37:8.4": "taṃ suṇohi purindada.",
"vv37:9.1": "Ahaṃ rājagahe ramme,",
"vv37:9.2": "sunandā nāmupāsikā;",
"vv37:9.3": "Saddhā sīlena sampannā,",
"vv37:9.4": "saṃvibhāgaratā sadā.",
"vv37:10.1": "Acchādanañca bhattañca,",
"vv37:10.2": "senāsanaṃ padīpiyaṃ;",
"vv37:10.3": "Adāsiṃ ujubhūtesu,",
"vv37:10.4": "vippasannena cetasā.",
"vv37:11.1": "Cātuddasiṃ pañcadasiṃ,",
"vv37:11.2": "yā ca pakkhassa aṭṭhamī;",
"vv37:11.3": "Pāṭihāriyapakkhañca,",
"vv37:11.4": "aṭṭhaṅgasusamāgataṃ.",
"vv37:12.1": "Uposathaṃ upavasissaṃ,",
"vv37:12.2": "sadā sīlesu saṃvutā;",
"vv37:12.3": "Saññamā saṃvibhāgā ca,",
"vv37:12.4": "vimānaṃ āvasāmahaṃ.",
"vv37:13.1": "Pāṇātipātā viratā,",
"vv37:13.2": "musāvādā ca saññatā;",
"vv37:13.3": "Theyyā ca aticārā ca,",
"vv37:13.4": "majjapānā ca ārakā.",
"vv37:14.1": "Pañcasikkhāpade ratā,",
"vv37:14.2": "ariyasaccāna kovidā;",
"vv37:14.3": "Upāsikā cakkhumato,",
"vv37:14.4": "gotamassa yasassino.",
"vv37:15.1": "Tassā me ñātikulā dāsī,",
"vv37:15.2": "sadā mālābhihārati;",
"vv37:15.3": "Tāhaṃ bhagavato thūpe,",
"vv37:15.4": "sabbamevābhiropayiṃ.",
"vv37:16.1": "Uposathe cahaṃ gantvā,",
"vv37:16.2": "mālāgandhavilepanaṃ;",
"vv37:16.3": "Thūpasmiṃ abhiropesiṃ,",
"vv37:16.4": "pasannā sehi pāṇibhi.",
"vv37:17.1": "Tena kammena devinda,",
"vv37:17.2": "rūpaṃ mayhaṃ gatī ca me;",
"vv37:17.3": "Iddhī ca ānubhāvo ca,",
"vv37:17.4": "yaṃ mālaṃ abhiropayiṃ.",
"vv37:18.1": "Yañca sīlavatī āsiṃ,",
"vv37:18.2": "na taṃ tāva vipaccati;",
"vv37:18.3": "Āsā ca pana me devinda,",
"vv37:18.4": "sakadāgāminī siyan”ti.",
"vv37:19.1": "Visālakkhivimānaṃ navamaṃ."
}