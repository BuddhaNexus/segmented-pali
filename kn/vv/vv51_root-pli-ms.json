{
"vv51:1.1": "Vimānavatthu",
"vv51:2.1": "Purisavimāna",
"vv51:3.1": "Mahārathavagga",
"vv51:4.1": "1. Maṇḍūkadevaputtavimānavatthu",
"vv51:5.1": "“Ko me vandati pādāni,",
"vv51:5.2": "iddhiyā yasasā jalaṃ;",
"vv51:5.3": "Abhikkantena vaṇṇena,",
"vv51:5.4": "sabbā obhāsayaṃ disā”ti.",
"vv51:6.1": "“Maṇḍūkohaṃ pure āsiṃ,",
"vv51:6.2": "udake vārigocaro;",
"vv51:6.3": "Tava dhammaṃ suṇantassa,",
"vv51:6.4": "avadhī vacchapālako.",
"vv51:7.1": "Muhuttaṃ cittapasādassa,",
"vv51:7.2": "iddhiṃ passa yasañca me;",
"vv51:7.3": "Ānubhāvañca me passa,",
"vv51:7.4": "vaṇṇaṃ passa jutiñca me.",
"vv51:8.1": "Ye ca te dīghamaddhānaṃ,",
"vv51:8.2": "dhammaṃ assosuṃ gotama;",
"vv51:8.3": "Pattā te acalaṭṭhānaṃ,",
"vv51:8.4": "yattha gantvā na socare”ti.",
"vv51:9.1": "Maṇḍūkadevaputtavimānaṃ paṭhamaṃ."
}