{
"vv36:1.1": "Vimānavatthu",
"vv36:2.1": "Itthivimāna",
"vv36:3.1": "Pāricchattakavagga",
"vv36:4.1": "8. Mallikāvimānavatthu",
"vv36:5.1": "“Pītavatthe pītadhaje,",
"vv36:5.2": "pītālaṅkārabhūsite;",
"vv36:5.3": "Pītantarāhi vaggūhi,",
"vv36:5.4": "apiḷandhāva sobhasi.",
"vv36:6.1": "Kā kambukāyūradhare,",
"vv36:6.2": "kañcanāveḷabhūsite;",
"vv36:6.3": "Hemajālakasañchanne,",
"vv36:6.4": "nānāratanamālinī.",
"vv36:7.1": "Sovaṇṇamayā lohitaṅgamayā ca,",
"vv36:7.2": "Muttāmayā veḷuriyamayā ca;",
"vv36:7.3": "Masāragallā sahalohitaṅgā,",
"vv36:7.4": "Pārevatakkhīhi maṇīhi cittatā.",
"vv36:8.1": "Koci koci ettha mayūrasussaro,",
"vv36:8.2": "Haṃsassa rañño karavīkasussaro;",
"vv36:8.3": "Tesaṃ saro suyyati vaggurūpo,",
"vv36:8.4": "Pañcaṅgikaṃ tūriyamivappavāditaṃ.",
"vv36:9.1": "Ratho ca te subho vaggu,",
"vv36:9.2": "nānāratanacittito;",
"vv36:9.3": "Nānāvaṇṇāhi dhātūhi,",
"vv36:9.4": "suvibhattova sobhati.",
"vv36:10.1": "Tasmiṃ rathe kañcanabimbavaṇṇe,",
"vv36:10.2": "Yā tvaṃ ṭhitā bhāsasimaṃ padesaṃ;",
"vv36:10.3": "Devate pucchitācikkha,",
"vv36:10.4": "Kissa kammassidaṃ phalan”ti.",
"vv36:11.1": "“Sovaṇṇajālaṃ maṇisoṇṇacittitaṃ,",
"vv36:11.2": "Muttācitaṃ hemajālena channaṃ;",
"vv36:11.3": "Parinibbute gotame appameyye,",
"vv36:11.4": "Pasannacittā ahamābhiropayiṃ.",
"vv36:12.1": "Tāhaṃ kammaṃ karitvāna,",
"vv36:12.2": "kusalaṃ buddhavaṇṇitaṃ;",
"vv36:12.3": "Apetasokā sukhitā,",
"vv36:12.4": "sampamodāmanāmayā”ti.",
"vv36:13.1": "Mallikāvimānaṃ aṭṭhamaṃ."
}