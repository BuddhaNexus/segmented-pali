{
"vv35:1.1": "Vimānavatthu",
"vv35:2.1": "Itthivimāna",
"vv35:3.1": "Pāricchattakavagga",
"vv35:4.1": "7. Pesavatīvimānavatthu",
"vv35:5.1": "“Phalikarajatahemajālachannaṃ,",
"vv35:5.2": "Vividhacitratalamaddasaṃ surammaṃ;",
"vv35:5.3": "Byamhaṃ sunimmitaṃ toraṇūpapannaṃ,",
"vv35:5.4": "Rucakupakiṇṇamidaṃ subhaṃ vimānaṃ.",
"vv35:6.1": "Bhāti ca dasa disā nabheva suriyo,",
"vv35:6.2": "Sarade tamonudo sahassaraṃsī;",
"vv35:6.3": "Tathā tapati midaṃ tava vimānaṃ,",
"vv35:6.4": "Jalamiva dhūmasikho nise nabhagge.",
"vv35:7.1": "Musatīva nayanaṃ sateratāva,",
"vv35:7.2": "Ākāse ṭhapitamidaṃ manuññaṃ;",
"vv35:7.3": "Vīṇāmurajasammatāḷaghuṭṭhaṃ,",
"vv35:7.4": "Iddhaṃ indapuraṃ yathā tavedaṃ.",
"vv35:8.1": "Padumakumuduppalakuvalayaṃ,",
"vv35:8.2": "Yodhika bandhukanojakā ca santi;",
"vv35:8.3": "Sālakusumitapupphitā asokā,",
"vv35:8.4": "Vividhadumaggasugandhasevitamidaṃ.",
"vv35:9.1": "Saḷalalabujabhujaka saṃyuttā,",
"vv35:9.2": "Kusakasuphullitalatāvalambinīhi;",
"vv35:9.3": "Maṇijālasadisā yasassinī,",
"vv35:9.4": "Rammā pokkharaṇī upaṭṭhitā te.",
"vv35:10.1": "Udakaruhā ca yetthi pupphajātā,",
"vv35:10.2": "Thalajā ye ca santi rukkhajātā;",
"vv35:10.3": "Mānusakāmānussakā ca dibbā,",
"vv35:10.4": "Sabbe tuyhaṃ nivesanamhi jātā.",
"vv35:11.1": "Kissa saṃyamadamassayaṃ vipāko,",
"vv35:11.2": "Kenāsi kammaphalenidhūpapannā;",
"vv35:11.3": "Yathā ca te adhigatamidaṃ vimānaṃ,",
"vv35:11.4": "Tadanupadaṃ avacāsiḷārapamhe”ti.",
"vv35:12.1": "“Yathā ca me adhigatamidaṃ vimānaṃ,",
"vv35:12.2": "Koñcamayūracakorasaṅghacaritaṃ;",
"vv35:12.3": "Dibyapilavahaṃsarājaciṇṇaṃ,",
"vv35:12.4": "Dijakāraṇḍavakokilābhinaditaṃ.",
"vv35:13.1": "Nānāsantānakapuppharukkhavividhā,",
"vv35:13.2": "Pāṭalijambuasokarukkhavantaṃ;",
"vv35:13.3": "Yathā ca me adhigatamidaṃ vimānaṃ,",
"vv35:13.4": "Taṃ te pavedayāmi suṇohi bhante.",
"vv35:14.1": "Magadhavarapuratthimena,",
"vv35:14.2": "Nāḷakagāmo nāma atthi bhante;",
"vv35:14.3": "Tattha ahosiṃ pure suṇisā,",
"vv35:14.4": "Pesavatīti tattha jāniṃsu mamaṃ.",
"vv35:15.1": "Sāhamapacitatthadhammakusalaṃ,",
"vv35:15.2": "Devamanussapūjitaṃ mahantaṃ;",
"vv35:15.3": "Upatissaṃ nibbutamappameyyaṃ,",
"vv35:15.4": "Muditamanā kusumehi abbhukiriṃ.",
"vv35:16.1": "Paramagatigatañca pūjayitvā,",
"vv35:16.2": "Antimadehadharaṃ isiṃ uḷāraṃ;",
"vv35:16.3": "Pahāya mānusakaṃ samussayaṃ,",
"vv35:16.4": "Tidasagatā idha māvasāmi ṭhānan”ti.",
"vv35:17.1": "Pesavatīvimānaṃ sattamaṃ."
}