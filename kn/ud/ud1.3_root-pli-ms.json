{
"ud1.3:1.1": "Udāna 1.3",
"ud1.3:2.1": "Tatiyabodhisutta",
"ud1.3:3.1": "Evaṃ me sutaṃ—",
"ud1.3:3.2": "ekaṃ samayaṃ bhagavā uruvelāyaṃ viharati najjā nerañjarāya tīre bodhirukkhamūle paṭhamābhisambuddho.",
"ud1.3:3.3": "Tena kho pana samayena bhagavā sattāhaṃ ekapallaṅkena nisinno hoti vimuttisukhapaṭisaṃvedī.",
"ud1.3:3.4": "Atha kho bhagavā tassa sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā rattiyā pacchimaṃ yāmaṃ paṭiccasamuppādaṃ anulomapaṭilomaṃ sādhukaṃ manasākāsi:",
"ud1.3:4.1": "“Iti imasmiṃ sati idaṃ hoti, imassuppādā idaṃ uppajjati, imasmiṃ asati idaṃ na hoti, imassa nirodhā idaṃ nirujjhati;",
"ud1.3:4.2": "yadidaṃ—avijjāpaccayā saṅkhārā",
"ud1.3:4.3": "saṅkhārapaccayā viññāṇaṃ",
"ud1.3:4.4": "viññāṇapaccayā nāmarūpaṃ",
"ud1.3:4.5": "nāmarūpapaccayā saḷāyatanaṃ",
"ud1.3:4.6": "saḷāyatanapaccayā phasso",
"ud1.3:4.7": "phassapaccayā vedanā",
"ud1.3:4.8": "vedanāpaccayā taṇhā",
"ud1.3:4.9": "taṇhāpaccayā upādānaṃ",
"ud1.3:4.10": "upādānapaccayā bhavo",
"ud1.3:4.11": "bhavapaccayā jāti",
"ud1.3:4.12": "jātipaccayā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā sambhavanti.",
"ud1.3:4.13": "Evametassa kevalassa dukkhakkhandhassa samudayo hoti.",
"ud1.3:5.1": "Avijjāya tveva asesavirāganirodhā saṅkhāranirodho",
"ud1.3:5.2": "saṅkhāranirodhā viññāṇanirodho",
"ud1.3:5.3": "viññāṇanirodhā nāmarūpanirodho",
"ud1.3:5.4": "nāmarūpanirodhā saḷāyatananirodho",
"ud1.3:5.5": "saḷāyatananirodhā phassanirodho",
"ud1.3:5.6": "phassanirodhā vedanānirodho",
"ud1.3:5.7": "vedanānirodhā taṇhānirodho",
"ud1.3:5.8": "taṇhānirodhā upādānanirodho",
"ud1.3:5.9": "upādānanirodhā bhavanirodho",
"ud1.3:5.10": "bhavanirodhā jātinirodho",
"ud1.3:5.11": "jātinirodhā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā nirujjhanti.",
"ud1.3:5.12": "Evametassa kevalassa dukkhakkhandhassa nirodho hotī”ti.",
"ud1.3:6.1": "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi:",
"ud1.3:7.1": "“Yadā have pātubhavanti dhammā, #3",
"ud1.3:7.2": "Ātāpino jhāyato brāhmaṇassa;",
"ud1.3:7.3": "Vidhūpayaṃ tiṭṭhati mārasenaṃ,",
"ud1.3:7.4": "Sūriyova obhāsayamantalikkhan”ti.",
"ud1.3:8.1": "Tatiyaṃ."
}