{
"ja441:1.1": "Jātaka",
"ja441:2.1": "Dasakanipāta",
"ja441:3.1": "Catudvāravagga",
"ja441:4.1": "3. Catuposathiyajātaka",
"ja441:5.1": "“Yo kopaneyye na karoti kopaṃ,",
"ja441:5.2": "Na kujjhati sappuriso kadāci;",
"ja441:5.3": "Kuddhopi so nāvikaroti kopaṃ,",
"ja441:5.4": "Taṃ ve naraṃ samaṇamāhu loke”.",
"ja441:6.1": "“Ūnūdaro yo sahate jighacchaṃ,",
"ja441:6.2": "Danto tapassī mitapānabhojano;",
"ja441:6.3": "Āhārahetu na karoti pāpaṃ,",
"ja441:6.4": "Taṃ ve naraṃ samaṇamāhu loke”.",
"ja441:7.1": "“Khiḍḍaṃ ratiṃ vippajahitvāna sabbaṃ,",
"ja441:7.2": "Na cālikaṃ bhāsasi kiñci loke;",
"ja441:7.3": "Vibhūsaṭṭhānā virato methunasmā,",
"ja441:7.4": "Taṃ ve naraṃ samaṇamāhu loke”.",
"ja441:8.1": "“Pariggahaṃ lobhadhammañca sabbaṃ,",
"ja441:8.2": "Yo ve pariññāya pariccajeti;",
"ja441:8.3": "Dantaṃ ṭhitattaṃ amamaṃ nirāsaṃ,",
"ja441:8.4": "Taṃ ve naraṃ samaṇamāhu loke”.",
"ja441:9.1": "“Pucchāma kattāramanomapaññaṃ,",
"ja441:9.2": "Kathāsu no viggaho atthi jāto;",
"ja441:9.3": "Chindajja kaṅkhaṃ vicikicchitāni,",
"ja441:9.4": "Tadajja kaṅkhaṃ vitaremu sabbe”.",
"ja441:10.1": "“Ye paṇḍitā atthadasā bhavanti,",
"ja441:10.2": "Bhāsanti te yoniso tattha kāle;",
"ja441:10.3": "Kathaṃ nu kathānaṃ abhāsitānaṃ,",
"ja441:10.4": "Atthaṃ nayeyyuṃ kusalā janindā.",
"ja441:11.1": "Kathaṃ have bhāsati nāgarājā,",
"ja441:11.2": "Garuḷo pana venateyyo kimāha;",
"ja441:11.3": "Gandhabbarājā pana kiṃ vadesi,",
"ja441:11.4": "Kathaṃ pana kurūnaṃ rājaseṭṭho”.",
"ja441:12.1": "“Khantiṃ have bhāsati nāgarājā,",
"ja441:12.2": "Appāhāraṃ garuḷo venateyyo;",
"ja441:12.3": "Gandhabbarājā rativippahānaṃ,",
"ja441:12.4": "Akiñcanaṃ kurūnaṃ rājaseṭṭho”.",
"ja441:13.1": "“Sabbāni etāni subhāsitāni,",
"ja441:13.2": "Na hettha dubbhāsitamatthi kiñci;",
"ja441:13.3": "Yasmiñca etāni patiṭṭhitāni,",
"ja441:13.4": "Arāva nābhyā susamohitāni;",
"ja441:13.5": "Catubbhi dhammehi samaṅgibhūtaṃ,",
"ja441:13.6": "Taṃ ve naraṃ samaṇamāhu loke”.",
"ja441:14.1": "“Tuvañhi seṭṭho tvamanuttarosi,",
"ja441:14.2": "Tvaṃ dhammagū dhammavidū sumedho;",
"ja441:14.3": "Paññāya pañhaṃ samadhiggahetvā,",
"ja441:14.4": "Acchecchi dhīro vicikicchitāni;",
"ja441:14.5": "Acchecchi kaṅkhaṃ vicikicchitāni,",
"ja441:14.6": "Cundo yathā nāgadantaṃ kharena.",
"ja441:15.1": "Nīluppalābhaṃ vimalaṃ anagghaṃ,",
"ja441:15.2": "Vatthaṃ idaṃ dhūmasamānavaṇṇaṃ;",
"ja441:15.3": "Pañhassa veyyākaraṇena tuṭṭho,",
"ja441:15.4": "Dadāmi te dhammapūjāya dhīra.",
"ja441:16.1": "Suvaṇṇamālaṃ satapattaphullitaṃ,",
"ja441:16.2": "Sakesaraṃ ratnasahassamaṇḍitaṃ;",
"ja441:16.3": "Pañhassa veyyākaraṇena tuṭṭho,",
"ja441:16.4": "Dadāmi te dhammapūjāya dhīra.",
"ja441:17.1": "Maṇiṃ anagghaṃ ruciraṃ pabhassaraṃ,",
"ja441:17.2": "Kaṇṭhāvasattaṃ maṇibhūsitaṃ me;",
"ja441:17.3": "Pañhassa veyyākaraṇena tuṭṭho,",
"ja441:17.4": "Dadāmi te dhammapūjāya dhīra.",
"ja441:18.1": "Gavaṃ sahassaṃ usabhañca nāgaṃ,",
"ja441:18.2": "Ājaññayutte ca rathe dasa ime;",
"ja441:18.3": "Pañhassa veyyākaraṇena tuṭṭho,",
"ja441:18.4": "Dadāmi te gāmavarāni soḷasa”.",
"ja441:19.1": "“Sāriputto tadā nāgo,",
"ja441:19.2": "supaṇṇo pana kolito;",
"ja441:19.3": "Gandhabbarājā anuruddho,",
"ja441:19.4": "rājā ānandapaṇḍito;",
"ja441:19.5": "Vidhuro bodhisatto ca,",
"ja441:19.6": "evaṃ dhāretha jātakan”ti.",
"ja441:20.1": "Catuposathiyajātakaṃ tatiyaṃ."
}