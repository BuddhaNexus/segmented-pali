{
"ja452:1.1": "Jātaka",
"ja452:2.1": "Dasakanipāta",
"ja452:3.1": "Catudvāravagga",
"ja452:4.1": "14. Bhūripaññajātaka",
"ja452:5.1": "“Saccaṃ kira tvaṃ api bhūripañña,",
"ja452:5.2": "Yā tādisī sīri dhitī matī ca;",
"ja452:5.3": "Na tāyatebhāvavasūpanitaṃ,",
"ja452:5.4": "Yo yavakaṃ bhuñjasi appasūpaṃ”.",
"ja452:6.1": "“Sukhaṃ dukkhena paripācayanto,",
"ja452:6.2": "Kālā kālaṃ vicinaṃ chandachanno;",
"ja452:6.3": "Atthassa dvārāni avāpuranto,",
"ja452:6.4": "Tenāhaṃ tussāmi yavodanena.",
"ja452:7.1": "Kālañca ñatvā abhijīhanāya,",
"ja452:7.2": "Mantehi atthaṃ paripācayitvā;",
"ja452:7.3": "Vijambhissaṃ sīhavijambhitāni,",
"ja452:7.4": "Tāyiddhiyā dakkhasi maṃ punāpi”.",
"ja452:8.1": "“Sukhīpi heke na karonti pāpaṃ,",
"ja452:8.2": "Avaṇṇasaṃsaggabhayā puneke;",
"ja452:8.3": "Pahū samāno vipulatthacintī,",
"ja452:8.4": "Kiṃkāraṇā me na karosi dukkhaṃ”.",
"ja452:9.1": "“Na paṇḍitā attasukhassa hetu,",
"ja452:9.2": "Pāpāni kammāni samācaranti;",
"ja452:9.3": "Dukkhena phuṭṭhā khalitāpi santā,",
"ja452:9.4": "Chandā ca dosā na jahanti dhammaṃ”.",
"ja452:10.1": "“Yena kenaci vaṇṇena,",
"ja452:10.2": "mudunā dāruṇena vā;",
"ja452:10.3": "Uddhare dīnamattānaṃ,",
"ja452:10.4": "pacchā dhammaṃ samācare”.",
"ja452:11.1": "“Yassa rukkhassa chāyāya,",
"ja452:11.2": "nisīdeyya sayeyya vā;",
"ja452:11.3": "Na tassa sākhaṃ bhañjeyya,",
"ja452:11.4": "mittadubbho hi pāpako.",
"ja452:12.1": "Yassāpi dhammaṃ puriso vijaññā,",
"ja452:12.2": "Ye cassa kaṅkhaṃ vinayanti santo;",
"ja452:12.3": "Taṃ hissa dīpañca parāyanañca,",
"ja452:12.4": "Na tena mettiṃ jarayetha pañño”.",
"ja452:13.1": "“Alaso gihī kāmabhogī na sādhu,",
"ja452:13.2": "Asaññato pabbajito na sādhu;",
"ja452:13.3": "Rājā na sādhu anisammakārī,",
"ja452:13.4": "Yo paṇḍito kodhano taṃ na sādhu.",
"ja452:14.1": "Nisamma khattiyo kayirā,",
"ja452:14.2": "nānisamma disampati;",
"ja452:14.3": "Nisammakārino rāja,",
"ja452:14.4": "yaso kitti ca vaḍḍhatī”ti.",
"ja452:15.1": "Bhūripaññajātakaṃ cuddasamaṃ."
}