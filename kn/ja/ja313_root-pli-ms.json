{
"ja313:1.1": "Jātaka",
"ja313:2.1": "Catukkanipāta",
"ja313:3.1": "Pucimandavagga",
"ja313:4.1": "3. Khantīvādījātaka",
"ja313:5.1": "“Yo te hatthe ca pāde ca,",
"ja313:5.2": "kaṇṇanāsañca chedayi;",
"ja313:5.3": "Tassa kujjha mahāvīra,",
"ja313:5.4": "mā raṭṭhaṃ vinasā idaṃ”.",
"ja313:6.1": "“Yo me hatthe ca pāde ca,",
"ja313:6.2": "kaṇṇanāsañca chedayi;",
"ja313:6.3": "Ciraṃ jīvatu so rājā,",
"ja313:6.4": "na hi kujjhanti mādisā”.",
"ja313:7.1": "Ahū atītamaddhānaṃ,",
"ja313:7.2": "samaṇo khantidīpano;",
"ja313:7.3": "Taṃ khantiyāyeva ṭhitaṃ,",
"ja313:7.4": "kāsirājā achedayi.",
"ja313:8.1": "Tassa kammapharusassa,",
"ja313:8.2": "vipāko kaṭuko ahu;",
"ja313:8.3": "Yaṃ kāsirājā vedesi,",
"ja313:8.4": "nirayamhi samappitoti.",
"ja313:9.1": "Khantīvādījātakaṃ tatiyaṃ."
}