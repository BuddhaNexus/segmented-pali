{
"ja534:1.1": "Jātaka",
"ja534:2.1": "Asītinipāta",
"ja534:3.1": "Cūḷahaṃsavagga",
"ja534:4.1": "2. Mahāhaṃsajātaka",
"ja534:5.1": "“Ete haṃsā pakkamanti,",
"ja534:5.2": "vakkaṅgā bhayameritā;",
"ja534:5.3": "Harittaca hemavaṇṇa,",
"ja534:5.4": "kāmaṃ sumukha pakkama.",
"ja534:6.1": "Ohāya maṃ ñātigaṇā,",
"ja534:6.2": "ekaṃ pāsavasaṃ gataṃ;",
"ja534:6.3": "Anapekkhamānā gacchanti,",
"ja534:6.4": "kiṃ eko avahīyasi.",
"ja534:7.1": "Pateva patataṃ seṭṭha,",
"ja534:7.2": "natthi baddhe sahāyatā;",
"ja534:7.3": "Mā anīghāya hāpesi,",
"ja534:7.4": "kāmaṃ sumukha pakkama”.",
"ja534:8.1": "“Nāhaṃ dukkhaparetopi,",
"ja534:8.2": "dhataraṭṭha tuvaṃ jahe;",
"ja534:8.3": "Jīvitaṃ maraṇaṃ vā me,",
"ja534:8.4": "tayā saddhiṃ bhavissati.",
"ja534:9.1": "Nāhaṃ dukkhaparetopi,",
"ja534:9.2": "dhataraṭṭha tuvaṃ jahe;",
"ja534:9.3": "Na maṃ anariyasaṃyutte,",
"ja534:9.4": "kamme yojetumarahasi.",
"ja534:10.1": "Sakumāro sakhā tyasmi,",
"ja534:10.2": "sacitte casmi te ṭhito;",
"ja534:10.3": "Ñāto senāpati tyāhaṃ,",
"ja534:10.4": "haṃsānaṃ pavaruttama.",
"ja534:11.1": "Kathaṃ ahaṃ vikatthissaṃ,",
"ja534:11.2": "ñātimajjhe ito gato;",
"ja534:11.3": "Taṃ hitvā patataṃ seṭṭha,",
"ja534:11.4": "kiṃ te vakkhāmito gato;",
"ja534:11.5": "Idha pāṇaṃ cajissāmi,",
"ja534:11.6": "nānariyaṃ kattumussahe”.",
"ja534:12.1": "“Eso hi dhammo sumukha,",
"ja534:12.2": "yaṃ tvaṃ ariyapathe ṭhito;",
"ja534:12.3": "Yo bhattāraṃ sakhāraṃ maṃ,",
"ja534:12.4": "na pariccattumussahe.",
"ja534:13.1": "Tañhi me pekkhamānassa,",
"ja534:13.2": "bhayaṃ na tveva jāyati;",
"ja534:13.3": "Adhigacchasi tvaṃ mayhaṃ,",
"ja534:13.4": "evaṃ bhūtassa jīvitaṃ”.",
"ja534:14.1": "Iccevaṃ mantayantānaṃ,",
"ja534:14.2": "Ariyānaṃ ariyavuttinaṃ;",
"ja534:14.3": "Daṇḍamādāya nesādo,",
"ja534:14.4": "Āpatī turito bhusaṃ.",
"ja534:15.1": "Tamāpatantaṃ disvāna,",
"ja534:15.2": "Sumukho atibrūhayi;",
"ja534:15.3": "Aṭṭhāsi purato rañño,",
"ja534:15.4": "Haṃso vissāsayaṃ byathaṃ.",
"ja534:16.1": "“Mā bhāyi patataṃ seṭṭha,",
"ja534:16.2": "na hi bhāyanti tādisā;",
"ja534:16.3": "Ahaṃ yogaṃ payuñjissaṃ,",
"ja534:16.4": "yuttaṃ dhammūpasaṃhitaṃ;",
"ja534:16.5": "Tena pariyāpadānena,",
"ja534:16.6": "khippaṃ pāsā pamokkhasi”.",
"ja534:17.1": "Tassa taṃ vacanaṃ sutvā,",
"ja534:17.2": "sumukhassa subhāsitaṃ;",
"ja534:17.3": "Pahaṭṭhalomo nesādo,",
"ja534:17.4": "añjalissa paṇāmayi.",
"ja534:18.1": "“Na me sutaṃ vā diṭṭhaṃ vā,",
"ja534:18.2": "bhāsanto mānusiṃ dijo;",
"ja534:18.3": "Ariyaṃ bruvāno vakkaṅgo,",
"ja534:18.4": "cajanto mānusiṃ giraṃ.",
"ja534:19.1": "Kiṃ nu tāyaṃ dijo hoti,",
"ja534:19.2": "mutto baddhaṃ upāsasi;",
"ja534:19.3": "Ohāya sakuṇā yanti,",
"ja534:19.4": "kiṃ eko avahīyasi”.",
"ja534:20.1": "“Rājā me so dijāmitta,",
"ja534:20.2": "senāpaccassa kārayiṃ;",
"ja534:20.3": "Tamāpade pariccattuṃ,",
"ja534:20.4": "nussahe vihagādhipaṃ.",
"ja534:21.1": "Mahāgaṇāya bhattā me,",
"ja534:21.2": "mā eko byasanaṃ agā;",
"ja534:21.3": "Tathā taṃ samma nesāda,",
"ja534:21.4": "bhattāyaṃ abhito rame”.",
"ja534:22.1": "“Ariyavattasi vakkaṅga,",
"ja534:22.2": "yo piṇḍamapacāyasi;",
"ja534:22.3": "Cajāmi te taṃ bhattāraṃ,",
"ja534:22.4": "gacchathūbho yathāsukhaṃ”.",
"ja534:23.1": "“Sace attappayogena,",
"ja534:23.2": "ohito haṃsapakkhinaṃ;",
"ja534:23.3": "Paṭigaṇhāma te samma,",
"ja534:23.4": "etaṃ abhayadakkhiṇaṃ.",
"ja534:24.1": "No ce attappayogena,",
"ja534:24.2": "ohito haṃsapakkhinaṃ;",
"ja534:24.3": "Anissaro muñcamamhe,",
"ja534:24.4": "theyyaṃ kayirāsi luddaka”.",
"ja534:25.1": "“Yassa tvaṃ bhatako rañño,",
"ja534:25.2": "kāmaṃ tasseva pāpaya;",
"ja534:25.3": "Tattha saṃyamano rājā,",
"ja534:25.4": "yathābhiññaṃ karissati”.",
"ja534:26.1": "Iccevaṃ vutto nesādo,",
"ja534:26.2": "hemavaṇṇe harittace;",
"ja534:26.3": "Ubho hatthehi saṅgayha,",
"ja534:26.4": "pañjare ajjhavodahi.",
"ja534:27.1": "Te pañjaragate pakkhī,",
"ja534:27.2": "ubho bhassaravaṇṇine;",
"ja534:27.3": "Sumukhaṃ dhataraṭṭhañca,",
"ja534:27.4": "luddo ādāya pakkami.",
"ja534:28.1": "Harīyamāno dhataraṭṭho,",
"ja534:28.2": "sumukhaṃ etadabravi;",
"ja534:28.3": "“Bāḷhaṃ bhāyāmi sumukha,",
"ja534:28.4": "sāmāya lakkhaṇūruyā;",
"ja534:28.5": "Asmākaṃ vadhamaññāya,",
"ja534:28.6": "athattānaṃ vadhissati.",
"ja534:29.1": "Pākahaṃsā ca sumukha,",
"ja534:29.2": "suhemā hemasuttacā;",
"ja534:29.3": "Koñcī samuddatīreva,",
"ja534:29.4": "kapaṇā nūna rucchati”.",
"ja534:30.1": "“Evaṃ mahanto lokassa,",
"ja534:30.2": "appameyyo mahāgaṇī;",
"ja534:30.3": "Ekitthimanusoceyya,",
"ja534:30.4": "nayidaṃ paññavatāmiva.",
"ja534:31.1": "Vātova gandhamādeti,",
"ja534:31.2": "ubhayaṃ chekapāpakaṃ;",
"ja534:31.3": "Bālo āmakapakkaṃva,",
"ja534:31.4": "lolo andhova āmisaṃ.",
"ja534:32.1": "Avinicchayaññu atthesu,",
"ja534:32.2": "mandova paṭibhāsi maṃ;",
"ja534:32.3": "Kiccākiccaṃ na jānāsi,",
"ja534:32.4": "sampatto kālapariyāyaṃ.",
"ja534:33.1": "Aḍḍhummatto udīresi,",
"ja534:33.2": "yo seyyā maññasitthiyo;",
"ja534:33.3": "Bahusādhāraṇā hetā,",
"ja534:33.4": "soṇḍānaṃva surāgharaṃ.",
"ja534:34.1": "Māyā cesā marīcī ca,",
"ja534:34.2": "soko rogo cupaddavo;",
"ja534:34.3": "Kharā ca bandhanā cetā,",
"ja534:34.4": "maccupāsā guhāsayā;",
"ja534:34.5": "Tāsu yo vissase poso,",
"ja534:34.6": "so naresu narādhamo”.",
"ja534:35.1": "“Yaṃ vuddhehi upaññātaṃ,",
"ja534:35.2": "ko taṃ ninditumarahati;",
"ja534:35.3": "Mahābhūtitthiyo nāma,",
"ja534:35.4": "lokasmiṃ udapajjisuṃ.",
"ja534:36.1": "Khiḍḍā paṇihitā tyāsu,",
"ja534:36.2": "rati tyāsu patiṭṭhitā;",
"ja534:36.3": "Bījāni tyāsu rūhanti,",
"ja534:36.4": "yadidaṃ sattā pajāyare;",
"ja534:36.5": "Tāsu ko nibbide poso,",
"ja534:36.6": "pāṇamāsajja pāṇibhi.",
"ja534:37.1": "Tvameva nañño sumukha,",
"ja534:37.2": "thīnaṃ atthesu yuñjasi;",
"ja534:37.3": "Tassa tyajja bhaye jāte,",
"ja534:37.4": "bhītena jāyate mati.",
"ja534:38.1": "Sabbo hi saṃsayaṃ patto,",
"ja534:38.2": "bhayaṃ bhīru titikkhati;",
"ja534:38.3": "Paṇḍitā ca mahantāno,",
"ja534:38.4": "atthe yuñjanti duyyuje.",
"ja534:39.1": "Etadatthāya rājāno,",
"ja534:39.2": "sūramicchanti mantinaṃ;",
"ja534:39.3": "Paṭibāhati yaṃ sūro,",
"ja534:39.4": "āpadaṃ attapariyāyaṃ.",
"ja534:40.1": "Mā no ajja vikantiṃsu,",
"ja534:40.2": "rañño sūdā mahānase;",
"ja534:40.3": "Tathā hi vaṇṇo pattānaṃ,",
"ja534:40.4": "phalaṃ veḷuṃva taṃ vadhi.",
"ja534:41.1": "Muttopi na icchi uḍḍetuṃ,",
"ja534:41.2": "Sayaṃ bandhaṃ upāgami;",
"ja534:41.3": "Sopajja saṃsayaṃ patto,",
"ja534:41.4": "Atthaṃ gaṇhāhi mā mukhaṃ.",
"ja534:42.1": "So taṃ yogaṃ payuñjassu,",
"ja534:42.2": "yuttaṃ dhammūpasaṃhitaṃ;",
"ja534:42.3": "Tava pariyāpadānena,",
"ja534:42.4": "mama pāṇesanaṃ cara”.",
"ja534:43.1": "“Mā bhāyi patataṃ seṭṭha,",
"ja534:43.2": "na hi bhāyanti tādisā;",
"ja534:43.3": "Ahaṃ yogaṃ payuñjissaṃ,",
"ja534:43.4": "yuttaṃ dhammūpasaṃhitaṃ;",
"ja534:43.5": "Mama pariyāpadānena,",
"ja534:43.6": "khippaṃ pāsā pamokkhasi”.",
"ja534:44.1": "So luddo haṃsakājena,",
"ja534:44.2": "rājadvāraṃ upāgami;",
"ja534:44.3": "“Paṭivedetha maṃ rañño,",
"ja534:44.4": "dhataraṭṭhāyamāgato”.",
"ja534:45.1": "Te disvā puññasaṅkāse,",
"ja534:45.2": "ubho lakkhaṇasammate;",
"ja534:45.3": "Khalu saṃyamano rājā,",
"ja534:45.4": "amacce ajjhabhāsatha.",
"ja534:46.1": "“Detha luddassa vatthāni,",
"ja534:46.2": "annaṃ pānañca bhojanaṃ;",
"ja534:46.3": "Kāmaṅkaro hiraññassa,",
"ja534:46.4": "yāvanto esa icchati”.",
"ja534:47.1": "Disvā luddaṃ pasannattaṃ,",
"ja534:47.2": "Kāsirājā tadabravi;",
"ja534:47.3": "“Yadyāyaṃ samma khemaka,",
"ja534:47.4": "Puṇṇā haṃsehi tiṭṭhati.",
"ja534:48.1": "Kathaṃ rucimajjhagataṃ,",
"ja534:48.2": "pāsahattho upāgami;",
"ja534:48.3": "Okiṇṇaṃ ñātisaṅghehi,",
"ja534:48.4": "nimmajjhimaṃ kathaṃ gahi”.",
"ja534:49.1": "“Ajja me sattamā ratti,",
"ja534:49.2": "adanāni upāsato;",
"ja534:49.3": "Padametassa anvesaṃ,",
"ja534:49.4": "appamatto ghaṭassito.",
"ja534:50.1": "Athassa padamaddakkhiṃ,",
"ja534:50.2": "carato adanesanaṃ;",
"ja534:50.3": "Tatthāhaṃ odahiṃ pāsaṃ,",
"ja534:50.4": "evaṃ taṃ dijamaggahiṃ”.",
"ja534:51.1": "“Ludda dve ime sakuṇā,",
"ja534:51.2": "atha ekoti bhāsasi;",
"ja534:51.3": "Cittaṃ nu te vipariyattaṃ,",
"ja534:51.4": "adu kiṃ nu jigīsasi”.",
"ja534:52.1": "“Yassa lohitakā tālā,",
"ja534:52.2": "tapanīyanibhā subhā;",
"ja534:52.3": "Uraṃ saṃhacca tiṭṭhanti,",
"ja534:52.4": "so me bandhaṃ upāgami.",
"ja534:53.1": "Athāyaṃ bhassaro pakkhī,",
"ja534:53.2": "abaddho baddhamāturaṃ;",
"ja534:53.3": "Ariyaṃ bruvāno aṭṭhāsi,",
"ja534:53.4": "cajanto mānusiṃ giraṃ”.",
"ja534:54.1": "“Atha kiṃ dāni sumukha,",
"ja534:54.2": "Hanuṃ saṃhacca tiṭṭhasi;",
"ja534:54.3": "Adu me parisaṃ patto,",
"ja534:54.4": "Bhayā bhīto na bhāsasi”.",
"ja534:55.1": "“Nāhaṃ kāsipati bhīto,",
"ja534:55.2": "ogayha parisaṃ tava;",
"ja534:55.3": "Nāhaṃ bhayā na bhāsissaṃ,",
"ja534:55.4": "vākyaṃ atthamhi tādise”.",
"ja534:56.1": "“Na te abhisaraṃ passe,",
"ja534:56.2": "na rathe napi pattike;",
"ja534:56.3": "Nāssa cammaṃ va kīṭaṃ vā,",
"ja534:56.4": "vammite ca dhanuggahe.",
"ja534:57.1": "Na hiraññaṃ suvaṇṇaṃ vā,",
"ja534:57.2": "nagaraṃ vā sumāpitaṃ;",
"ja534:57.3": "Okiṇṇaparikhaṃ duggaṃ,",
"ja534:57.4": "daḷhamaṭṭālakoṭṭhakaṃ;",
"ja534:57.5": "Yattha paviṭṭho sumukha,",
"ja534:57.6": "bhāyitabbaṃ na bhāyasi”.",
"ja534:58.1": "“Na me abhisarenattho,",
"ja534:58.2": "nagarena dhanena vā;",
"ja534:58.3": "Apathena pathaṃ yāma,",
"ja534:58.4": "antalikkhecarā mayaṃ.",
"ja534:59.1": "Sutā ca paṇḍitā tyamhā,",
"ja534:59.2": "nipuṇā atthacintakā;",
"ja534:59.3": "Bhāsematthavatiṃ vācaṃ,",
"ja534:59.4": "sacce cassa patiṭṭhito.",
"ja534:60.1": "Kiñca tuyhaṃ asaccassa,",
"ja534:60.2": "anariyassa karissati;",
"ja534:60.3": "Musāvādissa luddassa,",
"ja534:60.4": "bhaṇitampi subhāsitaṃ.",
"ja534:61.1": "Taṃ brāhmaṇānaṃ vacanā,",
"ja534:61.2": "imaṃ khemamakārayi;",
"ja534:61.3": "Abhayañca tayā ghuṭṭhaṃ,",
"ja534:61.4": "imāyo dasadhā disā.",
"ja534:62.1": "Ogayha te pokkharaṇiṃ,",
"ja534:62.2": "vippasannodakaṃ suciṃ;",
"ja534:62.3": "Pahūtaṃ cādanaṃ tattha,",
"ja534:62.4": "ahiṃsā cettha pakkhinaṃ.",
"ja534:63.1": "Idaṃ sutvāna nigghosaṃ,",
"ja534:63.2": "āgatamha tavantike;",
"ja534:63.3": "Te te bandhasma pāsena,",
"ja534:63.4": "etaṃ te bhāsitaṃ musā.",
"ja534:64.1": "Musāvādaṃ purakkhatvā,",
"ja534:64.2": "icchālobhañca pāpakaṃ;",
"ja534:64.3": "Ubho sandhimatikkamma,",
"ja534:64.4": "asātaṃ upapajjati”.",
"ja534:65.1": "“Nāparajjhāma sumukha,",
"ja534:65.2": "napi lobhāva maggahiṃ;",
"ja534:65.3": "Sutā ca paṇḍitātyattha-",
"ja534:65.4": "nipuṇā atthacintakā.",
"ja534:66.1": "Appevatthavatiṃ vācaṃ,",
"ja534:66.2": "byāhareyyuṃ idhāgatā;",
"ja534:66.3": "Tathā taṃ samma nesādo,",
"ja534:66.4": "vutto sumukha maggahi”.",
"ja534:67.1": "“Neva bhītā kāsipati,",
"ja534:67.2": "upanītasmi jīvite;",
"ja534:67.3": "Bhāsematthavatiṃ vācaṃ,",
"ja534:67.4": "sampattā kālapariyāyaṃ.",
"ja534:68.1": "Yo migena migaṃ hanti,",
"ja534:68.2": "pakkhiṃ vā pana pakkhinā;",
"ja534:68.3": "Sutena vā sutaṃ kiṇyā,",
"ja534:68.4": "kiṃ anariyataraṃ tato.",
"ja534:69.1": "Yo cāriyarudaṃ bhāse,",
"ja534:69.2": "anariyadhammavassito;",
"ja534:69.3": "Ubho so dhaṃsate lokā,",
"ja534:69.4": "idha ceva parattha ca.",
"ja534:70.1": "Na majjetha yasaṃ patto,",
"ja534:70.2": "na byādhe pattasaṃsayaṃ;",
"ja534:70.3": "Vāyametheva kiccesu,",
"ja534:70.4": "saṃvare vivarāni ca.",
"ja534:71.1": "Ye vuddhā abbhatikkantā,",
"ja534:71.2": "sampattā kālapariyāyaṃ;",
"ja534:71.3": "Idha dhammaṃ caritvāna,",
"ja534:71.4": "evaṃte tidivaṃ gatā.",
"ja534:72.1": "Idaṃ sutvā kāsipati,",
"ja534:72.2": "dhammamattani pālaya;",
"ja534:72.3": "Dhataraṭṭhañca muñcāhi,",
"ja534:72.4": "haṃsānaṃ pavaruttamaṃ”.",
"ja534:73.1": "“Āharantudakaṃ pajjaṃ,",
"ja534:73.2": "āsanañca mahārahaṃ;",
"ja534:73.3": "Pañjarato pamokkhāmi,",
"ja534:73.4": "dhataraṭṭhaṃ yasassinaṃ.",
"ja534:74.1": "Tañca senāpatiṃ dhīraṃ,",
"ja534:74.2": "nipuṇaṃ atthacintakaṃ;",
"ja534:74.3": "Yo sukhe sukhito rañño,",
"ja534:74.4": "dukkhite hoti dukkhito.",
"ja534:75.1": "Ediso kho arahati,",
"ja534:75.2": "piṇḍamasnātu bhattuno;",
"ja534:75.3": "Yathāyaṃ sumukho rañño,",
"ja534:75.4": "pāṇasādhāraṇo sakhā”.",
"ja534:76.1": "Pīṭhañca sabbasovaṇṇaṃ,",
"ja534:76.2": "Aṭṭhapādaṃ manoramaṃ;",
"ja534:76.3": "Maṭṭhaṃ kāsikamatthannaṃ,",
"ja534:76.4": "Dhataraṭṭho upāvisi.",
"ja534:77.1": "Kocchañca sabbasovaṇṇaṃ,",
"ja534:77.2": "veyyagghaparisibbitaṃ;",
"ja534:77.3": "Sumukho ajjhupāvekkhi,",
"ja534:77.4": "dhataraṭṭhassanantarā.",
"ja534:78.1": "Tesaṃ kañcanapattehi,",
"ja534:78.2": "puthū ādāya kāsiyo;",
"ja534:78.3": "Haṃsānaṃ abhihāresuṃ,",
"ja534:78.4": "aggarañño pavāsitaṃ.",
"ja534:79.1": "Disvā abhihaṭaṃ aggaṃ,",
"ja534:79.2": "kāsirājena pesitaṃ;",
"ja534:79.3": "Kusalo khattadhammānaṃ,",
"ja534:79.4": "tato pucchi anantarā.",
"ja534:80.1": "“Kaccinnu bhoto kusalaṃ,",
"ja534:80.2": "kacci bhoto anāmayaṃ;",
"ja534:80.3": "Kacci raṭṭhamidaṃ phītaṃ,",
"ja534:80.4": "dhammena manusāsasi”.",
"ja534:81.1": "“Kusalañceva me haṃsa,",
"ja534:81.2": "atho haṃsa anāmayaṃ;",
"ja534:81.3": "Atho raṭṭhamidaṃ phītaṃ,",
"ja534:81.4": "dhammenaṃ manusāsahaṃ”.",
"ja534:82.1": "“Kacci bhoto amaccesu,",
"ja534:82.2": "doso koci na vijjati;",
"ja534:82.3": "Kacci ca te tavatthesu,",
"ja534:82.4": "nāvakaṅkhanti jīvitaṃ”.",
"ja534:83.1": "“Athopi me amaccesu,",
"ja534:83.2": "doso koci na vijjati;",
"ja534:83.3": "Athopi te mamatthesu,",
"ja534:83.4": "nāvakaṅkhanti jīvitaṃ”.",
"ja534:84.1": "“Kacci te sādisī bhariyā,",
"ja534:84.2": "assavā piyabhāṇinī;",
"ja534:84.3": "Puttarūpayasūpetā,",
"ja534:84.4": "tava chandavasānugā”.",
"ja534:85.1": "“Atho me sādisī bhariyā,",
"ja534:85.2": "assavā piyabhāṇinī;",
"ja534:85.3": "Puttarūpayasūpetā,",
"ja534:85.4": "mama chandavasānugā”.",
"ja534:86.1": "“Kacci raṭṭhaṃ anuppīḷaṃ,",
"ja534:86.2": "akutociupaddavaṃ;",
"ja534:86.3": "Asāhasena dhammena,",
"ja534:86.4": "samena manusāsasi”.",
"ja534:87.1": "“Atho raṭṭhaṃ anuppīḷaṃ,",
"ja534:87.2": "akutociupaddavaṃ;",
"ja534:87.3": "Asāhasena dhammena,",
"ja534:87.4": "samena manusāsahaṃ”.",
"ja534:88.1": "“Kacci santo apacitā,",
"ja534:88.2": "Asanto parivajjitā;",
"ja534:88.3": "No ce dhammaṃ niraṃkatvā,",
"ja534:88.4": "Adhammamanuvattasi”.",
"ja534:89.1": "“Santo ca me apacitā,",
"ja534:89.2": "asanto parivajjitā;",
"ja534:89.3": "Dhammamevānuvattāmi,",
"ja534:89.4": "adhammo me niraṅkato”.",
"ja534:90.1": "“Kacci nānāgataṃ dīghaṃ,",
"ja534:90.2": "samavekkhasi khattiya;",
"ja534:90.3": "Kacci matto madanīye,",
"ja534:90.4": "paralokaṃ na santasi”.",
"ja534:91.1": "“Nāhaṃ anāgataṃ dīghaṃ,",
"ja534:91.2": "samavekkhāmi pakkhima;",
"ja534:91.3": "Ṭhito dasasu dhammesu,",
"ja534:91.4": "paralokaṃ na santase.",
"ja534:92.1": "Dānaṃ sīlaṃ pariccāgaṃ,",
"ja534:92.2": "ajjavaṃ maddavaṃ tapaṃ;",
"ja534:92.3": "Akkodhaṃ avihiṃsañca,",
"ja534:92.4": "khantiñca avirodhanaṃ.",
"ja534:93.1": "Iccete kusale dhamme,",
"ja534:93.2": "ṭhite passāmi attani;",
"ja534:93.3": "Tato me jāyate pīti,",
"ja534:93.4": "somanassañcanappakaṃ.",
"ja534:94.1": "Sumukho ca acintetvā,",
"ja534:94.2": "visajji pharusaṃ giraṃ;",
"ja534:94.3": "Bhāvadosamanaññāya,",
"ja534:94.4": "asmākāyaṃ vihaṅgamo.",
"ja534:95.1": "So kuddho pharusaṃ vācaṃ,",
"ja534:95.2": "nicchāresi ayoniso;",
"ja534:95.3": "Yānasmesu na vijjanti,",
"ja534:95.4": "nayidaṃ paññavatāmiva”.",
"ja534:96.1": "“Atthi me taṃ atisāraṃ,",
"ja534:96.2": "vegena manujādhipa;",
"ja534:96.3": "Dhataraṭṭhe ca baddhasmiṃ,",
"ja534:96.4": "dukkhaṃ me vipulaṃ ahu.",
"ja534:97.1": "Tvaṃ no pitāva puttānaṃ,",
"ja534:97.2": "bhūtānaṃ dharaṇīriva;",
"ja534:97.3": "Asmākaṃ adhipannānaṃ,",
"ja534:97.4": "khamassu rājakuñjara”.",
"ja534:98.1": "“Etaṃ te anumodāma,",
"ja534:98.2": "yaṃ bhāvaṃ na nigūhasi;",
"ja534:98.3": "Khilaṃ pabhindasi pakkhi,",
"ja534:98.4": "ujukosi vihaṅgama.",
"ja534:99.1": "Yaṃ kiñci ratanaṃ atthi,",
"ja534:99.2": "kāsirājanivesane;",
"ja534:99.3": "Rajataṃ jātarūpañca,",
"ja534:99.4": "muttā veḷuriyā bahū.",
"ja534:100.1": "Maṇayo saṅkhamuttā ca,",
"ja534:100.2": "vatthakaṃ haricandanaṃ;",
"ja534:100.3": "Ajinaṃ dantabhaṇḍañca,",
"ja534:100.4": "lohaṃ kāḷāyasaṃ bahuṃ;",
"ja534:100.5": "Etaṃ dadāmi vo vittaṃ,",
"ja534:100.6": "issaraṃ vissajāmi vo”.",
"ja534:101.1": "“Addhā apacitā tyamhā,",
"ja534:101.2": "sakkatā ca rathesabha;",
"ja534:101.3": "Dhammesu vattamānānaṃ,",
"ja534:101.4": "tvaṃ no ācariyo bhava.",
"ja534:102.1": "Ācariya samanuññātā,",
"ja534:102.2": "Tayā anumatā mayaṃ;",
"ja534:102.3": "Taṃ padakkhiṇato katvā,",
"ja534:102.4": "Ñātiṃ passemurindama”.",
"ja534:103.1": "Sabbarattiṃ cintayitvā,",
"ja534:103.2": "mantayitvā yathātathaṃ;",
"ja534:103.3": "Kāsirājā anuññāsi,",
"ja534:103.4": "haṃsānaṃ pavaruttamaṃ.",
"ja534:104.1": "Tato ratyā vivasāne,",
"ja534:104.2": "sūriyuggamanaṃ pati;",
"ja534:104.3": "Pekkhato kāsirājassa,",
"ja534:104.4": "bhavanā te vigāhisuṃ.",
"ja534:105.1": "Te aroge anuppatte,",
"ja534:105.2": "disvāna parame dije;",
"ja534:105.3": "Kekāti makaruṃ haṃsā,",
"ja534:105.4": "puthusaddo ajāyatha.",
"ja534:106.1": "Te patītā pamuttena,",
"ja534:106.2": "bhattunā bhattugāravā;",
"ja534:106.3": "Samantā parikiriṃsu,",
"ja534:106.4": "aṇḍajā laddhapaccayā.",
"ja534:107.1": "Evaṃ mittavataṃ atthā,",
"ja534:107.2": "sabbe honti padakkhiṇā;",
"ja534:107.3": "Haṃsā yathā dhataraṭṭhā,",
"ja534:107.4": "ñātisaṅghaṃ upāgamunti.",
"ja534:108.1": "Mahāhaṃsajātakaṃ dutiyaṃ."
}