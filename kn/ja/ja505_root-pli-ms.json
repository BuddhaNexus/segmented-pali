{
"ja505:1.1": "Jātaka",
"ja505:2.1": "Vīsatinipāta",
"ja505:3.1": "Mātaṅgavagga",
"ja505:4.1": "9. Somanassajātaka",
"ja505:5.1": "“Ko taṃ hiṃsati heṭheti,",
"ja505:5.2": "Kiṃ dummano socasi appatīto;",
"ja505:5.3": "Kassajja mātāpitaro rudantu,",
"ja505:5.4": "Kvajja setu nihato pathabyā”.",
"ja505:6.1": "“Tuṭṭhosmi deva tava dassanena,",
"ja505:6.2": "Cirassaṃ passāmi taṃ bhūmipāla;",
"ja505:6.3": "Ahiṃsako reṇumanuppavissa,",
"ja505:6.4": "Puttena te heṭhayitosmi deva”.",
"ja505:7.1": "“Āyantu dovārikā khaggabandhā,",
"ja505:7.2": "Kāsāviyā yantu antepurantaṃ;",
"ja505:7.3": "Hantvāna taṃ somanassaṃ kumāraṃ,",
"ja505:7.4": "Chetvāna sīsaṃ varamāharantu”.",
"ja505:8.1": "“Pesitā rājino dūtā,",
"ja505:8.2": "kumāraṃ etadabravuṃ;",
"ja505:8.3": "Issarena vitiṇṇosi,",
"ja505:8.4": "vadhaṃ pattosi khattiya”.",
"ja505:9.1": "“Sa rājaputto paridevayanto,",
"ja505:9.2": "Dasaṅguliṃ añjaliṃ paggahetvā;",
"ja505:9.3": "Ahampi icchāmi janinda daṭṭhuṃ,",
"ja505:9.4": "Jīvaṃ maṃ netvā paṭidassayetha”.",
"ja505:10.1": "Tassa taṃ vacanaṃ sutvā,",
"ja505:10.2": "rañño puttaṃ adassayuṃ;",
"ja505:10.3": "Putto ca pitaraṃ disvā,",
"ja505:10.4": "dūratovajjhabhāsatha.",
"ja505:11.1": "“Āgacchuṃ dovārikā khaggabandhā,",
"ja505:11.2": "Kāsāviyā hantu mamaṃ janinda;",
"ja505:11.3": "Akkhāhi me pucchito etamatthaṃ,",
"ja505:11.4": "Aparādho ko nidha mamajja atthi”.",
"ja505:12.1": "“Sāyañca pāto udakaṃ sajāti,",
"ja505:12.2": "Aggiṃ sadā pāricaratappamatto;",
"ja505:12.3": "Taṃ tādisaṃ saṃyataṃ brahmacāriṃ,",
"ja505:12.4": "Kasmā tuvaṃ brūsi gahappatīti”.",
"ja505:13.1": "“Tālā ca mūlā ca phalā ca deva,",
"ja505:13.2": "Pariggahā vividhā santimassa;",
"ja505:13.3": "Te rakkhati gopayatappamatto,",
"ja505:13.4": "Tasmā ahaṃ brūmi gahappatīti”.",
"ja505:14.1": "“Saccaṃ kho etaṃ vadasi kumāra,",
"ja505:14.2": "Pariggahā vividhā santimassa;",
"ja505:14.3": "Te rakkhati gopayatappamatto,",
"ja505:14.4": "Sa brāhmaṇo gahapati tena hoti”.",
"ja505:15.1": "“Suṇantu mayhaṃ parisā samāgatā,",
"ja505:15.2": "Sanegamā jānapadā ca sabbe;",
"ja505:15.3": "Bālāyaṃ bālassa vaco nisamma,",
"ja505:15.4": "Ahetunā ghātayate maṃ janindo.",
"ja505:16.1": "Daḷhasmi mūle visaṭe virūḷhe,",
"ja505:16.2": "Dunnikkayo veḷu pasākhajāto;",
"ja505:16.3": "Vandāmi pādāni tava janinda,",
"ja505:16.4": "Anujāna maṃ pabbajissāmi deva”.",
"ja505:17.1": "“Bhuñjassu bhoge vipule kumāra,",
"ja505:17.2": "Sabbañca te issariyaṃ dadāmi;",
"ja505:17.3": "Ajjeva tvaṃ kurūnaṃ hohi rājā,",
"ja505:17.4": "Mā pabbajī pabbajjā hi dukkhā”.",
"ja505:18.1": "“Kinnūdha deva tavamatthi bhogā,",
"ja505:18.2": "Pubbevahaṃ devaloke ramissaṃ;",
"ja505:18.3": "Rūpehi saddehi atho rasehi,",
"ja505:18.4": "Gandhehi phassehi manoramehi.",
"ja505:19.1": "Bhuttā ca me bhogā tidivasmiṃ deva,",
"ja505:19.2": "Parivārito accharānaṃ gaṇena;",
"ja505:19.3": "Tuvañca bālaṃ paraneyyaṃ viditvā,",
"ja505:19.4": "Na tādise rājakule vaseyyaṃ”.",
"ja505:20.1": "“Sacāhaṃ bālo paraneyyo asmi,",
"ja505:20.2": "Ekāparādhaṃ khama putta mayhaṃ;",
"ja505:20.3": "Punapi ce edisakaṃ bhaveyya,",
"ja505:20.4": "Yathāmatiṃ somanassa karohi”.",
"ja505:21.1": "“Anisamma kataṃ kammaṃ,",
"ja505:21.2": "anavatthāya cintitaṃ;",
"ja505:21.3": "Bhesajjasseva vebhaṅgo,",
"ja505:21.4": "vipāko hoti pāpako.",
"ja505:22.1": "Nisamma ca kataṃ kammaṃ,",
"ja505:22.2": "sammāvatthāya cintitaṃ;",
"ja505:22.3": "Bhesajjasseva sampatti,",
"ja505:22.4": "vipāko hoti bhadrako.",
"ja505:23.1": "Alaso gihī kāmabhogī na sādhu,",
"ja505:23.2": "Asaññato pabbajito na sādhu;",
"ja505:23.3": "Rājā na sādhu anisammakārī,",
"ja505:23.4": "Yo paṇḍito kodhano taṃ na sādhu.",
"ja505:24.1": "Nisamma khattiyo kayirā,",
"ja505:24.2": "nānisamma disampati;",
"ja505:24.3": "Nisammakārino rāja,",
"ja505:24.4": "yaso kitti ca vaḍḍhati.",
"ja505:25.1": "Nisamma daṇḍaṃ paṇayeyya issaro,",
"ja505:25.2": "Vegā kataṃ tappati bhūmipāla;",
"ja505:25.3": "Sammāpaṇīdhī ca narassa atthā,",
"ja505:25.4": "Anānutappā te bhavanti pacchā.",
"ja505:26.1": "Anānutappāni hi ye karonti,",
"ja505:26.2": "Vibhajja kammāyatanāni loke;",
"ja505:26.3": "Viññuppasatthāni sukhudrayāni,",
"ja505:26.4": "Bhavanti buddhānumatāni tāni.",
"ja505:27.1": "Āgacchuṃ dovārikā khaggabandhā,",
"ja505:27.2": "Kāsāviyā hantu mamaṃ janinda;",
"ja505:27.3": "Mātuñca aṅkasmimahaṃ nisinno,",
"ja505:27.4": "Ākaḍḍhito sahasā tehi deva.",
"ja505:28.1": "Kaṭukañhi sambādhaṃ sukicchaṃ patto,",
"ja505:28.2": "Madhurampi yaṃ jīvitaṃ laddha rāja;",
"ja505:28.3": "Kicchenahaṃ ajja vadhā pamutto,",
"ja505:28.4": "Pabbajjamevābhimanohamasmi”.",
"ja505:29.1": "“Putto tavāyaṃ taruṇo sudhamme,",
"ja505:29.2": "Anukampako somanasso kumāro;",
"ja505:29.3": "Taṃ yācamāno na labhāmi svajja,",
"ja505:29.4": "Arahasi naṃ yācitave tuvampi”.",
"ja505:30.1": "“Ramassu bhikkhācariyāya putta,",
"ja505:30.2": "Nisamma dhammesu paribbajassu;",
"ja505:30.3": "Sabbesu bhūtesu nidhāya daṇḍaṃ,",
"ja505:30.4": "Anindito brahmamupehi ṭhānaṃ”.",
"ja505:31.1": "“Acchera rūpaṃ vata yādisañca,",
"ja505:31.2": "Dukkhitaṃ maṃ dukkhāpayase sudhamme;",
"ja505:31.3": "Yācassu puttaṃ iti vuccamānā,",
"ja505:31.4": "Bhiyyova ussāhayase kumāraṃ”.",
"ja505:32.1": "“Ye vippamuttā anavajjabhogino,",
"ja505:32.2": "Parinibbutā lokamimaṃ caranti;",
"ja505:32.3": "Tamariyamaggaṃ paṭipajjamānaṃ,",
"ja505:32.4": "Na ussahe vārayituṃ kumāraṃ”.",
"ja505:33.1": "“Addhā have sevitabbā sapaññā,",
"ja505:33.2": "Bahussutā ye bahuṭhānacintino;",
"ja505:33.3": "Yesāyaṃ sutvāna subhāsitāni,",
"ja505:33.4": "Appossukkā vītasokā sudhammā”ti.",
"ja505:34.1": "Somanassajātakaṃ navamaṃ."
}