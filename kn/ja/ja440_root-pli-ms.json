{
"ja440:1.1": "Jātaka",
"ja440:2.1": "Dasakanipāta",
"ja440:3.1": "Catudvāravagga",
"ja440:4.1": "2. Kaṇhajātaka",
"ja440:5.1": "“Kaṇho vatāyaṃ puriso,",
"ja440:5.2": "kaṇhaṃ bhuñjati bhojanaṃ;",
"ja440:5.3": "Kaṇhe bhūmipadesasmiṃ,",
"ja440:5.4": "na mayhaṃ manaso piyo”.",
"ja440:6.1": "“Na kaṇho tacasā hoti,",
"ja440:6.2": "antosāro hi brāhmaṇo;",
"ja440:6.3": "Yasmiṃ pāpāni kammāni,",
"ja440:6.4": "sa ve kaṇho sujampati”.",
"ja440:7.1": "“Etasmiṃ te sulapite,",
"ja440:7.2": "patirūpe subhāsite;",
"ja440:7.3": "Varaṃ brāhmaṇa te dammi,",
"ja440:7.4": "yaṃ kiñci manasicchasi”.",
"ja440:8.1": "“Varañce me ado sakka,",
"ja440:8.2": "sabbabhūtānamissara;",
"ja440:8.3": "Sunikkodhaṃ suniddosaṃ,",
"ja440:8.4": "nillobhaṃ vuttimattano;",
"ja440:8.5": "Nisnehamabhikaṅkhāmi,",
"ja440:8.6": "ete me caturo vare”.",
"ja440:9.1": "“Kiṃ nu kodhe vā dose vā,",
"ja440:9.2": "lobhe snehe ca brāhmaṇa;",
"ja440:9.3": "Ādīnavaṃ tvaṃ passasi,",
"ja440:9.4": "taṃ me akkhāhi pucchito”.",
"ja440:10.1": "“Appo hutvā bahu hoti,",
"ja440:10.2": "vaḍḍhate so akhantijo;",
"ja440:10.3": "Āsaṅgī bahupāyāso,",
"ja440:10.4": "tasmā kodhaṃ na rocaye.",
"ja440:11.1": "Duṭṭhassa pharusā vācā,",
"ja440:11.2": "parāmāso anantarā;",
"ja440:11.3": "Tato pāṇi tato daṇḍo,",
"ja440:11.4": "satthassa paramā gati;",
"ja440:11.5": "Doso kodhasamuṭṭhāno,",
"ja440:11.6": "tasmā dosaṃ na rocaye.",
"ja440:12.1": "Ālopa sāhasākārā,",
"ja440:12.2": "nikatī vañcanāni ca;",
"ja440:12.3": "Dissanti lobhadhammesu,",
"ja440:12.4": "tasmā lobhaṃ na rocaye.",
"ja440:13.1": "Snehasaṅgathitā ganthā,",
"ja440:13.2": "senti manomayā puthū;",
"ja440:13.3": "Te bhusaṃ upatāpenti,",
"ja440:13.4": "tasmā snehaṃ na rocaye”.",
"ja440:14.1": "“Etasmiṃ te sulapite,",
"ja440:14.2": "patirūpe subhāsite;",
"ja440:14.3": "Varaṃ brāhmaṇa te dammi,",
"ja440:14.4": "yaṃ kiñci manasicchasi”.",
"ja440:15.1": "“Varañce me ado sakka,",
"ja440:15.2": "sabbabhūtānamissara;",
"ja440:15.3": "Araññe me viharato,",
"ja440:15.4": "niccaṃ ekavihārino;",
"ja440:15.5": "Ābādhā mā uppajjeyyuṃ,",
"ja440:15.6": "antarāyakarā bhusā”.",
"ja440:16.1": "“Etasmiṃ te sulapite,",
"ja440:16.2": "patirūpe subhāsite;",
"ja440:16.3": "Varaṃ brāhmaṇa te dammi,",
"ja440:16.4": "yaṃ kiñci manasicchasi”.",
"ja440:17.1": "“Varañce me ado sakka,",
"ja440:17.2": "sabbabhūtānamissara;",
"ja440:17.3": "Na mano vā sarīraṃ vā,",
"ja440:17.4": "maṃ-kate sakka kassaci;",
"ja440:17.5": "Kadāci upahaññetha,",
"ja440:17.6": "etaṃ sakka varaṃ vare”ti.",
"ja440:18.1": "Kaṇhajātakaṃ dutiyaṃ."
}