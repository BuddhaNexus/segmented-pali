{
"ja443:1.1": "Jātaka",
"ja443:2.1": "Dasakanipāta",
"ja443:3.1": "Catudvāravagga",
"ja443:4.1": "5. Cūḷabodhijātaka",
"ja443:5.1": "“Yo te imaṃ visālakkhiṃ,",
"ja443:5.2": "piyaṃ sammhitabhāsiniṃ;",
"ja443:5.3": "Ādāya balā gaccheyya,",
"ja443:5.4": "kiṃ nu kayirāsi brāhmaṇa”.",
"ja443:6.1": "“Uppajje me na mucceyya,",
"ja443:6.2": "na me mucceyya jīvato;",
"ja443:6.3": "Rajaṃva vipulā vuṭṭhi,",
"ja443:6.4": "khippameva nivāraye”.",
"ja443:7.1": "“Yannu pubbe vikatthittho,",
"ja443:7.2": "balamhiva apassito;",
"ja443:7.3": "Svajja tuṇhikato dāni,",
"ja443:7.4": "saṅghāṭiṃ sibbamacchasi”.",
"ja443:8.1": "“Uppajji me na muccittha,",
"ja443:8.2": "na me muccittha jīvato;",
"ja443:8.3": "Rajaṃva vipulā vuṭṭhi,",
"ja443:8.4": "khippameva nivārayiṃ”.",
"ja443:9.1": "“Kiṃ te uppajji no mucci,",
"ja443:9.2": "kiṃ te na mucci jīvato;",
"ja443:9.3": "Rajaṃva vipulā vuṭṭhi,",
"ja443:9.4": "katamaṃ tvaṃ nivārayi”.",
"ja443:10.1": "“Yamhi jāte na passati,",
"ja443:10.2": "ajāte sādhu passati;",
"ja443:10.3": "So me uppajji no mucci,",
"ja443:10.4": "kodho dummedhagocaro.",
"ja443:11.1": "Yena jātena nandanti,",
"ja443:11.2": "amittā dukkhamesino;",
"ja443:11.3": "So me uppajji no mucci,",
"ja443:11.4": "kodho dummedhagocaro.",
"ja443:12.1": "Yasmiñca jāyamānamhi,",
"ja443:12.2": "sadatthaṃ nāvabujjhati;",
"ja443:12.3": "So me uppajji no mucci,",
"ja443:12.4": "kodho dummedhagocaro.",
"ja443:13.1": "Yenābhibhūto kusalaṃ jahāti,",
"ja443:13.2": "Parakkare vipulañcāpi atthaṃ;",
"ja443:13.3": "Sa bhīmaseno balavā pamaddī,",
"ja443:13.4": "Kodho mahārāja na me amuccatha.",
"ja443:14.1": "Kaṭṭhasmiṃ matthamānasmiṃ,",
"ja443:14.2": "Pāvako nāma jāyati;",
"ja443:14.3": "Tameva kaṭṭhaṃ ḍahati,",
"ja443:14.4": "Yasmā so jāyate gini.",
"ja443:15.1": "Evaṃ mandassa posassa,",
"ja443:15.2": "bālassa avijānato;",
"ja443:15.3": "Sārambhā jāyate kodho,",
"ja443:15.4": "sopi teneva ḍayhati.",
"ja443:16.1": "Aggīva tiṇakaṭṭhasmiṃ,",
"ja443:16.2": "kodho yassa pavaḍḍhati;",
"ja443:16.3": "Nihīyati tassa yaso,",
"ja443:16.4": "kāḷapakkheva candimā.",
"ja443:17.1": "Anedho dhūmaketūva,",
"ja443:17.2": "kodho yassūpasammati;",
"ja443:17.3": "Āpūrati tassa yaso,",
"ja443:17.4": "sukkapakkheva candimā”ti.",
"ja443:18.1": "Cūḷabodhijātakaṃ pañcamaṃ."
}