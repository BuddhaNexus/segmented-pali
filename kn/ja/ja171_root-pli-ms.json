{
"ja171:1.1": "Jātaka",
"ja171:2.1": "Dukanipāta",
"ja171:3.1": "Kalyāṇavagga",
"ja171:4.1": "1. Kalyāṇadhammajātaka",
"ja171:5.1": "“Kalyāṇadhammoti yadā janinda,",
"ja171:5.2": "Loke samaññaṃ anupāpuṇāti;",
"ja171:5.3": "Tasmā na hiyyetha naro sapañño,",
"ja171:5.4": "Hiriyāpi santo dhuramādiyanti.",
"ja171:6.1": "Sāyaṃ samaññā idha majja pattā,",
"ja171:6.2": "Kalyāṇadhammoti janinda loke;",
"ja171:6.3": "Tāhaṃ samekkhaṃ idha pabbajissaṃ,",
"ja171:6.4": "Na hi matthi chando idha kāmabhoge”ti.",
"ja171:7.1": "Kalyāṇadhammajātakaṃ paṭhamaṃ."
}