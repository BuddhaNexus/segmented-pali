{
"ja474:1.1": "Jātaka",
"ja474:2.1": "Terasakanipāta",
"ja474:3.1": "Ambavagga",
"ja474:4.1": "1. Ambajātaka",
"ja474:5.1": "“Ahāsi me ambaphalāni pubbe,",
"ja474:5.2": "Aṇūni thūlāni ca brahmacāri;",
"ja474:5.3": "Teheva mantehi na dāni tuyhaṃ,",
"ja474:5.4": "Dumapphalā pātubhavanti brahme”.",
"ja474:6.1": "“Nakkhattayogaṃ paṭimānayāmi,",
"ja474:6.2": "Khaṇaṃ muhuttañca mante na passaṃ;",
"ja474:6.3": "Nakkhattayogañca khaṇañca laddhā,",
"ja474:6.4": "Addhāharissambaphalaṃ pahūtaṃ”.",
"ja474:7.1": "“Nakkhattayogaṃ na pure abhāṇi,",
"ja474:7.2": "Khaṇaṃ muhuttaṃ na pure asaṃsi;",
"ja474:7.3": "Sayaṃ harī ambaphalaṃ pahūtaṃ,",
"ja474:7.4": "Vaṇṇena gandhena rasenupetaṃ.",
"ja474:8.1": "Mantābhijappena pure hi tuyhaṃ,",
"ja474:8.2": "Dumapphalā pātubhavanti brahme;",
"ja474:8.3": "Svājja na pāresi jappampi mantaṃ,",
"ja474:8.4": "Ayaṃ so ko nāma tavajja dhammo”.",
"ja474:9.1": "“Caṇḍālaputto mama sampadāsi,",
"ja474:9.2": "Dhammena mante pakatiñca saṃsi;",
"ja474:9.3": "Mā cassu me pucchito nāmagottaṃ,",
"ja474:9.4": "Guyhittho atthaṃ vijaheyya manto.",
"ja474:10.1": "Sohaṃ janindena janamhi puṭṭho,",
"ja474:10.2": "Makkhābhibhūto alikaṃ abhāṇiṃ;",
"ja474:10.3": "‘Mantā ime brāhmaṇassā’ti micchā,",
"ja474:10.4": "Pahīnamanto kapaṇo rudāmi”.",
"ja474:11.1": "“Eraṇḍā pucimandā vā,",
"ja474:11.2": "atha vā pālibhaddakā;",
"ja474:11.3": "Madhuṃ madhutthiko vinde,",
"ja474:11.4": "so hi tassa dumuttamo.",
"ja474:12.1": "Khattiyā brāhmaṇā vessā,",
"ja474:12.2": "suddā caṇḍālapukkusā;",
"ja474:12.3": "Yamhā dhammaṃ vijāneyya,",
"ja474:12.4": "so hi tassa naruttamo.",
"ja474:13.1": "Imassa daṇḍañca vadhañca datvā,",
"ja474:13.2": "Gale gahetvā khalayātha jammaṃ;",
"ja474:13.3": "Yo uttamatthaṃ kasirena laddhaṃ,",
"ja474:13.4": "Mānātimānena vināsayittha”.",
"ja474:14.1": "“Yathā samaṃ maññamāno pateyya,",
"ja474:14.2": "Sobbhaṃ guhaṃ narakaṃ pūtipādaṃ;",
"ja474:14.3": "Rajjūti vā akkame kaṇhasappaṃ,",
"ja474:14.4": "Andho yathā jotimadhiṭṭhaheyya;",
"ja474:14.5": "Evampi maṃ tvaṃ khalitaṃ sapañña,",
"ja474:14.6": "Pahīnamantassa punappadāhi”.",
"ja474:15.1": "“Dhammena mantaṃ tava sampadāsiṃ,",
"ja474:15.2": "Tuvampi dhammena pariggahesi;",
"ja474:15.3": "Pakatimpi te attamano asaṃsiṃ,",
"ja474:15.4": "Dhamme ṭhitaṃ taṃ na jaheyya manto.",
"ja474:16.1": "Yo bāla mantaṃ kasirena laddhaṃ,",
"ja474:16.2": "Yaṃ dullabhaṃ ajja manussaloke;",
"ja474:16.3": "Kiñcāpi laddhā jīvituṃ appapañño,",
"ja474:16.4": "Vināsayī alikaṃ bhāsamāno.",
"ja474:17.1": "Bālassa mūḷhassa akataññuno ca,",
"ja474:17.2": "Musā bhaṇantassa asaññatassa;",
"ja474:17.3": "Mante mayaṃ tādisake na dema,",
"ja474:17.4": "Kuto mantā gaccha na mayha ruccasī”ti.",
"ja474:18.1": "Ambajātakaṃ paṭhamaṃ."
}