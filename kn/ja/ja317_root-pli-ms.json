{
"ja317:1.1": "Jātaka",
"ja317:2.1": "Catukkanipāta",
"ja317:3.1": "Pucimandavagga",
"ja317:4.1": "7. Matarodanajātaka",
"ja317:5.1": "“Mataṃ mataṃ evaṃ rodatha,",
"ja317:5.2": "Na hi taṃ rodatha yo marissati;",
"ja317:5.3": "Sabbepi sarīradhārino,",
"ja317:5.4": "Anupubbena jahanti jīvitaṃ.",
"ja317:6.1": "Devamanussā catuppadā,",
"ja317:6.2": "Pakkhigaṇā uragā ca bhogino;",
"ja317:6.3": "Samhi sarīre anissarā,",
"ja317:6.4": "Ramamānāva jahanti jīvitaṃ.",
"ja317:7.1": "Evaṃ calitaṃ asaṇṭhitaṃ,",
"ja317:7.2": "Sukhadukkhaṃ manujesvapekkhiya;",
"ja317:7.3": "Kanditaruditaṃ niratthakaṃ,",
"ja317:7.4": "Kiṃ vo sokagaṇābhikīrare.",
"ja317:8.1": "Dhuttā ca soṇḍā akatā,",
"ja317:8.2": "bālā sūrā ayogino;",
"ja317:8.3": "Dhīraṃ maññanti bāloti,",
"ja317:8.4": "ye dhammassa akovidā”ti.",
"ja317:9.1": "Matarodanajātakaṃ sattamaṃ."
}