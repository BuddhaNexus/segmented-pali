{
"ja470:1.1": "Jātaka",
"ja470:2.1": "Dvādasakanipāta",
"ja470:3.1": "Cūḷakuṇālavagga",
"ja470:4.1": "7. Kosiyajātaka",
"ja470:5.1": "“Neva kiṇāmi napi vikkiṇāmi,",
"ja470:5.2": "Na cāpi me sannicayo ca atthi;",
"ja470:5.3": "Sukiccharūpaṃ vatidaṃ parittaṃ,",
"ja470:5.4": "Patthodano nālamayaṃ duvinnaṃ”.",
"ja470:6.1": "“Appamhā appakaṃ dajjā,",
"ja470:6.2": "anumajjhato majjhakaṃ;",
"ja470:6.3": "Bahumhā bahukaṃ dajjā,",
"ja470:6.4": "adānaṃ nupapajjati.",
"ja470:7.1": "Taṃ taṃ vadāmi kosiya,",
"ja470:7.2": "dehi dānāni bhuñja ca”.",
"ja470:7.3": "Ariyamaggaṃ samārūha,",
"ja470:7.4": "nekāsī labhate sukhaṃ.",
"ja470:8.1": "“Moghañcassa hutaṃ hoti,",
"ja470:8.2": "moghañcāpi samīhitaṃ;",
"ja470:8.3": "Atithismiṃ yo nisinnasmiṃ,",
"ja470:8.4": "eko bhuñjati bhojanaṃ.",
"ja470:9.1": "Taṃ taṃ vadāmi kosiya,",
"ja470:9.2": "dehi dānāni bhuñja ca;",
"ja470:9.3": "Ariyamaggaṃ samārūha,",
"ja470:9.4": "nekāsī labhate sukhaṃ”.",
"ja470:10.1": "“Saccañcassa hutaṃ hoti,",
"ja470:10.2": "saccañcāpi samīhitaṃ;",
"ja470:10.3": "Atithismiṃ yo nisinnasmiṃ,",
"ja470:10.4": "neko bhuñjati bhojanaṃ.",
"ja470:11.1": "Taṃ taṃ vadāmi kosiya,",
"ja470:11.2": "dehi dānāni bhuñja ca;",
"ja470:11.3": "Ariyamaggaṃ samārūha,",
"ja470:11.4": "nekāsī labhate sukhaṃ”.",
"ja470:12.1": "“Sarañca juhati poso,",
"ja470:12.2": "bahukāya gayāya ca;",
"ja470:12.3": "Doṇe timbarutitthasmiṃ,",
"ja470:12.4": "sīghasote mahāvahe.",
"ja470:13.1": "Atra cassa hutaṃ hoti,",
"ja470:13.2": "atra cassa samīhitaṃ;",
"ja470:13.3": "Atithismiṃ yo nisinnasmiṃ,",
"ja470:13.4": "neko bhuñjati bhojanaṃ.",
"ja470:14.1": "Taṃ taṃ vadāmi kosiya,",
"ja470:14.2": "dehi dānāni bhuñja ca;",
"ja470:14.3": "Ariyamaggaṃ samārūha,",
"ja470:14.4": "nekāsī labhate sukhaṃ”.",
"ja470:15.1": "“Baḷisañhi so nigilati,",
"ja470:15.2": "dīghasuttaṃ sabandhanaṃ;",
"ja470:15.3": "Atithismiṃ yo nisinnasmiṃ,",
"ja470:15.4": "eko bhuñjati bhojanaṃ.",
"ja470:16.1": "Taṃ taṃ vadāmi kosiya,",
"ja470:16.2": "dehi dānāni bhuñja ca;",
"ja470:16.3": "Ariyamaggaṃ samārūha,",
"ja470:16.4": "nekāsī labhate sukhaṃ”.",
"ja470:17.1": "“Uḷāravaṇṇā vata brāhmaṇā ime,",
"ja470:17.2": "Ayañca vo sunakho kissa hetu;",
"ja470:17.3": "Uccāvacaṃ vaṇṇanibhaṃ vikubbati,",
"ja470:17.4": "Akkhātha no brāhmaṇā ke nu tumhe”.",
"ja470:18.1": "“Cando ca suriyo ca ubho idhāgatā,",
"ja470:18.2": "Ayaṃ pana mātali devasārathi;",
"ja470:18.3": "Sakkohamasmi tidasānamindo,",
"ja470:18.4": "Eso ca kho pañcasikhoti vuccati”.",
"ja470:19.1": "“Pāṇissarā mudiṅgā ca,",
"ja470:19.2": "murajālambarāni ca;",
"ja470:19.3": "Suttamenaṃ pabodhenti,",
"ja470:19.4": "paṭibuddho ca nandati”.",
"ja470:20.1": "“Ye kecime maccharino kadariyā,",
"ja470:20.2": "Paribhāsakā samaṇabrāhmaṇānaṃ;",
"ja470:20.3": "Idheva nikkhippa sarīradehaṃ,",
"ja470:20.4": "Kāyassa bhedā nirayaṃ vajanti”.",
"ja470:21.1": "“Ye kecime suggatimāsamānā,",
"ja470:21.2": "Dhamme ṭhitā saṃyame saṃvibhāge;",
"ja470:21.3": "Idheva nikkhippa sarīradehaṃ,",
"ja470:21.4": "Kāyassa bhedā sugatiṃ vajanti.",
"ja470:22.1": "Tvaṃ nosi ñāti purimāsu jātisu,",
"ja470:22.2": "So maccharī rosako pāpadhammo;",
"ja470:22.3": "Taveva atthāya idhāgatamhā,",
"ja470:22.4": "Mā pāpadhammo nirayaṃ gamittha”.",
"ja470:23.1": "“Addhā hi maṃ vo hitakāmā,",
"ja470:23.2": "yaṃ maṃ samanusāsatha;",
"ja470:23.3": "Sohaṃ tathā karissāmi,",
"ja470:23.4": "sabbaṃ vuttaṃ hitesibhi.",
"ja470:24.1": "Esāhamajjeva upāramāmi,",
"ja470:24.2": "Na cāpihaṃ kiñci kareyya pāpaṃ;",
"ja470:24.3": "Na cāpi me kiñci adeyyamatthi,",
"ja470:24.4": "Na cāpidatvā udakaṃ pivāmi.",
"ja470:25.1": "Evañca me dadato sabbakālaṃ,",
"ja470:25.2": "Bhogā ime vāsava khīyissanti;",
"ja470:25.3": "Tato ahaṃ pabbajissāmi sakka,",
"ja470:25.4": "Hitvāna kāmāni yathodhikānī”ti.",
"ja470:26.1": "Kosiyajātakaṃ sattamaṃ."
}