{
"ja318:1.1": "Jātaka",
"ja318:2.1": "Catukkanipāta",
"ja318:3.1": "Pucimandavagga",
"ja318:4.1": "8. Kaṇaverajātaka",
"ja318:5.1": "“Yaṃ taṃ vasantasamaye,",
"ja318:5.2": "kaṇaveresu bhāṇusu;",
"ja318:5.3": "Sāmaṃ bāhāya pīḷesi,",
"ja318:5.4": "sā taṃ ārogyamabravi”.",
"ja318:6.1": "“Ambho na kira saddheyyaṃ,",
"ja318:6.2": "yaṃ vāto pabbataṃ vahe;",
"ja318:6.3": "Pabbatañce vahe vāto,",
"ja318:6.4": "sabbampi pathaviṃ vahe;",
"ja318:6.5": "Yattha sāmā kālakatā,",
"ja318:6.6": "sā maṃ ārogyamabravi”.",
"ja318:7.1": "“Na ceva sā kālakatā,",
"ja318:7.2": "na ca sā aññamicchati;",
"ja318:7.3": "Ekabhattikinī sāmā,",
"ja318:7.4": "tameva abhikaṅkhati”.",
"ja318:8.1": "“Asanthutaṃ maṃ cirasanthutena,",
"ja318:8.2": "Nimīni sāmā adhuvaṃ dhuvena;",
"ja318:8.3": "Mayāpi sāmā nimineyya aññaṃ,",
"ja318:8.4": "Ito ahaṃ dūrataraṃ gamissan”ti.",
"ja318:9.1": "Kaṇaverajātakaṃ aṭṭhamaṃ."
}