{
"ja537:1.1": "Jātaka",
"ja537:2.1": "Asītinipāta",
"ja537:3.1": "Cūḷahaṃsavagga",
"ja537:4.1": "5. Mahāsutasomajātaka",
"ja537:5.1": "“Kasmā tuvaṃ rasaka edisāni,",
"ja537:5.2": "Karosi kammāni sudāruṇāni;",
"ja537:5.3": "Hanāsi itthī purise ca mūḷho,",
"ja537:5.4": "Maṃsassa hetu adu dhanassa kāraṇā”.",
"ja537:6.1": "“Na attahetū na dhanassa kāraṇā,",
"ja537:6.2": "Na puttadārassa sahāyañātinaṃ;",
"ja537:6.3": "Bhattā ca me bhagavā bhūmipālo,",
"ja537:6.4": "So khādati maṃsaṃ bhadantedisaṃ”.",
"ja537:7.1": "“Sace tuvaṃ bhatturatthe payutto,",
"ja537:7.2": "Karosi kammāni sudāruṇāni;",
"ja537:7.3": "Pātova antepuraṃ pāpuṇitvā,",
"ja537:7.4": "Lapeyyāsi me rājino sammukhe taṃ”.",
"ja537:8.1": "“Tathā karissāmi ahaṃ bhadante,",
"ja537:8.2": "Yathā tuvaṃ bhāsasi kāḷahatthi;",
"ja537:8.3": "Pātova antepuraṃ pāpuṇitvā,",
"ja537:8.4": "Vakkhāmi te rājino sammukhe taṃ”.",
"ja537:9.1": "Tato ratyā vivasāne,",
"ja537:9.2": "sūriyuggamanaṃ pati;",
"ja537:9.3": "Kāḷo rasakamādāya,",
"ja537:9.4": "rājānaṃ upasaṅkami;",
"ja537:9.5": "Upasaṅkamma rājānaṃ,",
"ja537:9.6": "idaṃ vacanamabravi.",
"ja537:10.1": "“Saccaṃ kira mahārāja,",
"ja537:10.2": "rasako pesito tayā;",
"ja537:10.3": "Hanati itthipurise,",
"ja537:10.4": "tuvaṃ maṃsāni khādasi”.",
"ja537:11.1": "“Evameva tathā kāḷa,",
"ja537:11.2": "rasako pesito mayā;",
"ja537:11.3": "Mama atthaṃ karontassa,",
"ja537:11.4": "kimetaṃ paribhāsasi”.",
"ja537:12.1": "“Ānando sabbamacchānaṃ,",
"ja537:12.2": "khāditvā rasagiddhimā;",
"ja537:12.3": "Parikkhīṇāya parisāya,",
"ja537:12.4": "attānaṃ khādiyā mato.",
"ja537:13.1": "Evaṃ pamatto rasagārave ratto,",
"ja537:13.2": "Bālo yadī āyati nāvabujjhati;",
"ja537:13.3": "Vidhamma putte caji ñātake ca,",
"ja537:13.4": "Parivattiya attānaññeva khādati.",
"ja537:14.1": "Idaṃ te sutvāna vigetu chando,",
"ja537:14.2": "Mā bhakkhayī rāja manussamaṃsaṃ;",
"ja537:14.3": "Mā tvaṃ imaṃ kevalaṃ vārijova,",
"ja537:14.4": "Dvipadādhipa suññamakāsi raṭṭhaṃ”.",
"ja537:15.1": "“Sujāto nāma nāmena,",
"ja537:15.2": "oraso tassa atrajo;",
"ja537:15.3": "Jambupesimaladdhāna,",
"ja537:15.4": "mato so tassa saṅkhaye.",
"ja537:16.1": "Evameva ahaṃ kāḷa,",
"ja537:16.2": "bhutvā bhakkhaṃ rasuttamaṃ;",
"ja537:16.3": "Aladdhā mānusaṃ maṃsaṃ,",
"ja537:16.4": "maññe hissāmi jīvitaṃ”.",
"ja537:17.1": "“Māṇava abhirūposi,",
"ja537:17.2": "kule jātosi sotthiye;",
"ja537:17.3": "Na tvaṃ arahasi tāta,",
"ja537:17.4": "abhakkhaṃ bhakkhayetave”.",
"ja537:18.1": "“Rasānaṃ aññataraṃ etaṃ,",
"ja537:18.2": "kasmā maṃ tvaṃ nivāraye;",
"ja537:18.3": "Sohaṃ tattha gamissāmi,",
"ja537:18.4": "yattha lacchāmi edisaṃ.",
"ja537:19.1": "Sovāhaṃ nippatissāmi,",
"ja537:19.2": "na te vacchāmi santike;",
"ja537:19.3": "Yassa me dassanena tvaṃ,",
"ja537:19.4": "nābhinandasi brāhmaṇa”.",
"ja537:20.1": "“Addhā aññepi dāyāde,",
"ja537:20.2": "putte lacchāma māṇava;",
"ja537:20.3": "Tvañca jamma vinassassu,",
"ja537:20.4": "yattha pattaṃ na taṃ suṇe”.",
"ja537:21.1": "“Evameva tuvaṃ rāja,",
"ja537:21.2": "dvipadinda suṇohi me;",
"ja537:21.3": "Pabbājessanti taṃ raṭṭhā,",
"ja537:21.4": "soṇḍaṃ māṇavakaṃ yathā”.",
"ja537:22.1": "“Sujāto nāma nāmena,",
"ja537:22.2": "bhāvitattāna sāvako;",
"ja537:22.3": "Accharaṃ kāmayantova,",
"ja537:22.4": "na so bhuñji na so pivi.",
"ja537:23.1": "Kusaggenudakamādāya,",
"ja537:23.2": "samudde udakaṃ mine;",
"ja537:23.3": "Evaṃ mānusakā kāmā,",
"ja537:23.4": "dibbakāmāna santike.",
"ja537:24.1": "Evameva ahaṃ kāḷa,",
"ja537:24.2": "bhutvā bhakkhaṃ rasuttamaṃ;",
"ja537:24.3": "Aladdhā mānusaṃ maṃsaṃ,",
"ja537:24.4": "maññe hissāmi jīvitaṃ”.",
"ja537:25.1": "“Yathāpi te dhataraṭṭhā,",
"ja537:25.2": "haṃsā vehāyasaṅgamā;",
"ja537:25.3": "Abhuttaparibhogena,",
"ja537:25.4": "sabbe abbhatthataṃ gatā.",
"ja537:26.1": "Evameva tuvaṃ rāja,",
"ja537:26.2": "dvipadinda suṇohi me;",
"ja537:26.3": "Abhakkhaṃ rāja bhakkhesi,",
"ja537:26.4": "tasmā pabbājayanti taṃ”.",
"ja537:27.1": "“Tiṭṭhāhīti mayā vutto,",
"ja537:27.2": "So tvaṃ gacchasi pammukho;",
"ja537:27.3": "Aṭṭhito tvaṃ ṭhitomhīti,",
"ja537:27.4": "Lapasi brahmacārini;",
"ja537:27.5": "Idaṃ te samaṇāyuttaṃ,",
"ja537:27.6": "Asiñca me maññasi kaṅkapattaṃ”.",
"ja537:28.1": "“Ṭhitohamasmī sadhammesu rāja,",
"ja537:28.2": "Na nāmagottaṃ parivattayāmi;",
"ja537:28.3": "Corañca loke aṭhitaṃ vadanti,",
"ja537:28.4": "Āpāyikaṃ nerayikaṃ ito cutaṃ.",
"ja537:29.1": "Sace tvaṃ saddahasi rāja,",
"ja537:29.2": "sutaṃ gaṇhāhi khattiya;",
"ja537:29.3": "Tena yaññaṃ yajitvāna,",
"ja537:29.4": "evaṃ saggaṃ gamissasi”.",
"ja537:30.1": "“Kismiṃ nu raṭṭhe tava jātibhūmi,",
"ja537:30.2": "Atha kena atthena idhānupatto;",
"ja537:30.3": "Akkhāhi me brāhmaṇa etamatthaṃ,",
"ja537:30.4": "Kimicchasī demi tayajja patthitaṃ”.",
"ja537:31.1": "“Gāthā catasso dharaṇīmahissara,",
"ja537:31.2": "Sugambhiratthā varasāgarūpamā;",
"ja537:31.3": "Taveva atthāya idhāgatosmi,",
"ja537:31.4": "Suṇohi gāthā paramatthasaṃhitā”.",
"ja537:32.1": "“Na ve rudanti matimanto sapaññā,",
"ja537:32.2": "Bahussutā ye bahuṭhānacintino;",
"ja537:32.3": "Dīpañhi etaṃ paramaṃ narānaṃ,",
"ja537:32.4": "Yaṃ paṇḍitā sokanudā bhavanti.",
"ja537:33.1": "Attānaṃ ñātī udāhu puttadāraṃ,",
"ja537:33.2": "Dhaññaṃ dhanaṃ rajataṃ jātarūpaṃ;",
"ja537:33.3": "Kimeva tvaṃ sutasomānutappe,",
"ja537:33.4": "Korabyaseṭṭha vacanaṃ suṇoma tetaṃ”.",
"ja537:34.1": "“Nevāhamattānamanutthunāmi,",
"ja537:34.2": "Na puttadāraṃ na dhanaṃ na raṭṭhaṃ;",
"ja537:34.3": "Satañca dhammo carito purāṇo,",
"ja537:34.4": "Taṃ saṅkaraṃ brāhmaṇassānutappe.",
"ja537:35.1": "Kato mayā saṅkaro brāhmaṇena,",
"ja537:35.2": "Raṭṭhe sake issariye ṭhitena;",
"ja537:35.3": "Taṃ saṅkaraṃ brāhmaṇasappadāya,",
"ja537:35.4": "Saccānurakkhī punarāvajissaṃ”.",
"ja537:36.1": "“Nevāhametaṃ abhisaddahāmi,",
"ja537:36.2": "Sukhī naro maccumukhā pamutto;",
"ja537:36.3": "Amittahatthaṃ punarāvajeyya,",
"ja537:36.4": "Korabyaseṭṭha na hi maṃ upesi.",
"ja537:37.1": "Mutto tuvaṃ porisādassa hatthā,",
"ja537:37.2": "Gantvā sakaṃ mandiraṃ kāmakāmī;",
"ja537:37.3": "Madhuraṃ piyaṃ jīvitaṃ laddha rāja,",
"ja537:37.4": "Kuto tuvaṃ ehisi me sakāsaṃ”.",
"ja537:38.1": "“Mataṃ vareyya parisuddhasīlo,",
"ja537:38.2": "Na jīvitaṃ garahito pāpadhammo;",
"ja537:38.3": "Na hi taṃ naraṃ tāyati duggatīhi,",
"ja537:38.4": "Yassāpi hetu alikaṃ bhaṇeyya.",
"ja537:39.1": "Sacepi vāto girimāvaheyya,",
"ja537:39.2": "Cando ca suriyo ca chamā pateyyuṃ;",
"ja537:39.3": "Sabbā ca najjo paṭisotaṃ vajeyyuṃ,",
"ja537:39.4": "Na tvevahaṃ rāja musā bhaṇeyyaṃ.",
"ja537:40.1": "Nabhaṃ phaleyya udadhīpi susse,",
"ja537:40.2": "Saṃvaṭṭaye bhūtadharā vasundharā;",
"ja537:40.3": "Siluccayo meru samūlamuppate,",
"ja537:40.4": "Na tvevahaṃ rāja musā bhaṇeyyaṃ.",
"ja537:41.1": "Asiñca sattiñca parāmasāmi,",
"ja537:41.2": "Sapathampi te samma ahaṃ karomi;",
"ja537:41.3": "Tayā pamutto anaṇo bhavitvā,",
"ja537:41.4": "Saccānurakkhī punarāvajissaṃ”.",
"ja537:42.1": "“Yo te kato saṅgaro brāhmaṇena,",
"ja537:42.2": "Raṭṭhe sake issariye ṭhitena;",
"ja537:42.3": "Taṃ saṅgaraṃ brāhmaṇasappadāya,",
"ja537:42.4": "Saccānurakkhī punarāvajassu”.",
"ja537:43.1": "“Yo me kato saṅgaro brāhmaṇena,",
"ja537:43.2": "Raṭṭhe sake issariye ṭhitena;",
"ja537:43.3": "Taṃ saṅgaraṃ brāhmaṇasappadāya,",
"ja537:43.4": "Saccānurakkhī punarāvajissaṃ”.",
"ja537:44.1": "Mutto ca so porisādassa hatthā,",
"ja537:44.2": "Gantvāna taṃ brāhmaṇaṃ etadavoca;",
"ja537:44.3": "“Suṇoma gāthāyo satārahāyo,",
"ja537:44.4": "Yā me sutā assu hitāya brahme”.",
"ja537:45.1": "“Sakideva sutasoma,",
"ja537:45.2": "sabbhi hoti samāgamo;",
"ja537:45.3": "Sā naṃ saṅgati pāleti,",
"ja537:45.4": "nāsabbhi bahu saṅgamo.",
"ja537:46.1": "Sabbhireva samāsetha,",
"ja537:46.2": "sabbhi kubbetha santhavaṃ;",
"ja537:46.3": "Sataṃ saddhammamaññāya,",
"ja537:46.4": "seyyo hoti na pāpiyo.",
"ja537:47.1": "Jīranti ve rājarathā sucittā,",
"ja537:47.2": "Atho sarīrampi jaraṃ upeti;",
"ja537:47.3": "Satañca dhammo na jaraṃ upeti,",
"ja537:47.4": "Santo have sabbhi pavedayanti.",
"ja537:48.1": "Nabhañca dūre pathavī ca dūre,",
"ja537:48.2": "Pāraṃ samuddassa tadāhu dūre;",
"ja537:48.3": "Tato have dūrataraṃ vadanti,",
"ja537:48.4": "Satañca dhammo asatañca rāja”.",
"ja537:49.1": "“Sahassiyā imā gāthā,",
"ja537:49.2": "nahimā gāthā satārahā;",
"ja537:49.3": "Cattāri tvaṃ sahassāni,",
"ja537:49.4": "khippaṃ gaṇhāhi brāhmaṇa”.",
"ja537:50.1": "“Āsītiyā nāvutiyā ca gāthā,",
"ja537:50.2": "Satārahā cāpi bhaveyya gāthā;",
"ja537:50.3": "Paccattameva sutasoma jānahi,",
"ja537:50.4": "Sahassiyā nāma kā atthi gāthā”.",
"ja537:51.1": "“Icchāmi vohaṃ sutavuddhimattano,",
"ja537:51.2": "Santoti maṃ sappurisā bhajeyyuṃ;",
"ja537:51.3": "Ahaṃ savantīhi mahodadhīva,",
"ja537:51.4": "Na hi tāta tappāmi subhāsitena.",
"ja537:52.1": "Aggi yathā tiṇakaṭṭhaṃ dahanto,",
"ja537:52.2": "Na tappatī sāgarova nadīhi;",
"ja537:52.3": "Evampi te paṇḍitā rājaseṭṭha,",
"ja537:52.4": "Sutvā na tappanti subhāsitena.",
"ja537:53.1": "Sakassa dāsassa yadā suṇomi,",
"ja537:53.2": "Gāthaṃ ahaṃ atthavatiṃ janinda;",
"ja537:53.3": "Tameva sakkacca nisāmayāmi,",
"ja537:53.4": "Na hi tāta dhammesu mamatthi titti.",
"ja537:54.1": "Idaṃ te raṭṭhaṃ sadhanaṃ sayoggaṃ,",
"ja537:54.2": "Sakāyuraṃ sabbakāmūpapannaṃ;",
"ja537:54.3": "Kiṃ kāmahetu paribhāsasi maṃ,",
"ja537:54.4": "Gacchāmahaṃ porisādassa ñatte”.",
"ja537:55.1": "“Attānurakkhāya bhavanti hete,",
"ja537:55.2": "Hatthārohā rathikā pattikā ca;",
"ja537:55.3": "Assāruhā ye ca dhanuggahāse,",
"ja537:55.4": "Senaṃ payuñjāma hanāma sattuṃ”.",
"ja537:56.1": "“Sudukkaraṃ porisādo akāsi,",
"ja537:56.2": "Jīvaṃ gahetvāna avassajī maṃ;",
"ja537:56.3": "Taṃ tādisaṃ pubbakiccaṃ saranto,",
"ja537:56.4": "Dubbhe ahaṃ tassa kathaṃ janinda”.",
"ja537:57.1": "Vanditvā so pitaraṃ mātarañca,",
"ja537:57.2": "Anusāsetvā negamañca balañca;",
"ja537:57.3": "Saccavādī saccānurakkhamāno,",
"ja537:57.4": "Agamāsi so yattha porisādo.",
"ja537:58.1": "“Kato mayā saṅgaro brāhmaṇena,",
"ja537:58.2": "Raṭṭhe sake issariye ṭhitena;",
"ja537:58.3": "Taṃ saṅgaraṃ brāhmaṇasappadāya,",
"ja537:58.4": "Saccānurakkhī punarāgatosmi;",
"ja537:58.5": "Yajassu yaññaṃ khāda maṃ porisāda”.",
"ja537:59.1": "“Na hāyate khāditaṃ mayhaṃ pacchā,",
"ja537:59.2": "Citakā ayaṃ tāva sadhūmikāva;",
"ja537:59.3": "Niddhūmake pacitaṃ sādhupakkaṃ,",
"ja537:59.4": "Suṇoma gāthāyo satārahāyo”.",
"ja537:60.1": "“Adhammiko tvaṃ porisādakāsi,",
"ja537:60.2": "Raṭṭhā ca bhaṭṭho udarassa hetu;",
"ja537:60.3": "Dhammañcimā abhivadanti gāthā,",
"ja537:60.4": "Dhammo ca adhammo ca kuhiṃ sameti.",
"ja537:61.1": "Adhammikassa luddassa,",
"ja537:61.2": "niccaṃ lohitapāṇino;",
"ja537:61.3": "Natthi saccaṃ kuto dhammo,",
"ja537:61.4": "kiṃ sutena karissasi”.",
"ja537:62.1": "“Yo maṃsahetu migavaṃ careyya,",
"ja537:62.2": "Yo vā hane purisamattahetu;",
"ja537:62.3": "Ubhopi te pecca samā bhavanti,",
"ja537:62.4": "Kasmā no adhammikaṃ brūsi maṃ tvaṃ”.",
"ja537:63.1": "“Pañca pañca na khā bhakkhā,",
"ja537:63.2": "khattiyena pajānatā;",
"ja537:63.3": "Abhakkhaṃ rāja bhakkhesi,",
"ja537:63.4": "tasmā adhammiko tuvaṃ”.",
"ja537:64.1": "“Mutto tuvaṃ porisādassa hatthā,",
"ja537:64.2": "Gantvā sakaṃ mandiraṃ kāmakāmī;",
"ja537:64.3": "Amittahatthaṃ punarāgatosi,",
"ja537:64.4": "Na khattadhamme kusalosi rāja”.",
"ja537:65.1": "“Ye khattadhamme kusalā bhavanti,",
"ja537:65.2": "Pāyena te nerayikā bhavanti;",
"ja537:65.3": "Tasmā ahaṃ khattadhammaṃ pahāya,",
"ja537:65.4": "Saccānurakkhī punarāgatosmi;",
"ja537:65.5": "Yajassu yaññaṃ khāda maṃ porisāda”.",
"ja537:66.1": "“Pāsādavāsā pathavīgavāssā,",
"ja537:66.2": "Kāmitthiyo kāsikacandanañca;",
"ja537:66.3": "Sabbaṃ tahiṃ labhasi sāmitāya,",
"ja537:66.4": "Saccena kiṃ passasi ānisaṃsaṃ”.",
"ja537:67.1": "“Ye kecime atthi rasā pathabyā,",
"ja537:67.2": "Saccaṃ tesaṃ sādhutaraṃ rasānaṃ;",
"ja537:67.3": "Sacce ṭhitā samaṇabrāhmaṇā ca,",
"ja537:67.4": "Taranti jātimaraṇassa pāraṃ”.",
"ja537:68.1": "“Mutto tuvaṃ porisādassa hatthā,",
"ja537:68.2": "Gantvā sakaṃ mandiraṃ kāmakāmī;",
"ja537:68.3": "Amittahatthaṃ punarāgatosi,",
"ja537:68.4": "Na hi nūna te maraṇabhayaṃ janinda;",
"ja537:68.5": "Alīnacitto asi saccavādī”.",
"ja537:69.1": "“Katā me kalyāṇā anekarūpā,",
"ja537:69.2": "Yaññā yiṭṭhā ye vipulā pasatthā;",
"ja537:69.3": "Visodhito paralokassa maggo,",
"ja537:69.4": "Dhamme ṭhito ko maraṇassa bhāye.",
"ja537:70.1": "Katā me kalyāṇā anekarūpā,",
"ja537:70.2": "Yaññā yiṭṭhā ye vipulā pasatthā;",
"ja537:70.3": "Anānutappaṃ paralokaṃ gamissaṃ,",
"ja537:70.4": "Yajassu yaññaṃ ada maṃ porisāda.",
"ja537:71.1": "Pitā ca mātā ca upaṭṭhitā me,",
"ja537:71.2": "Dhammena me issariyaṃ pasatthaṃ;",
"ja537:71.3": "Visodhito paralokassa maggo,",
"ja537:71.4": "Dhamme ṭhito ko maraṇassa bhāye.",
"ja537:72.1": "Pitā ca mātā ca upaṭṭhitā me,",
"ja537:72.2": "Dhammena me issariyaṃ pasatthaṃ;",
"ja537:72.3": "Anānutappaṃ paralokaṃ gamissaṃ,",
"ja537:72.4": "Yajassu yaññaṃ ada maṃ porisāda.",
"ja537:73.1": "Ñātīsu mittesu katā me kārā,",
"ja537:73.2": "Dhammena me issariyaṃ pasatthaṃ;",
"ja537:73.3": "Visodhito paralokassa maggo,",
"ja537:73.4": "Dhamme ṭhito ko maraṇassa bhāye.",
"ja537:74.1": "Ñātīsu mittesu katā me kārā,",
"ja537:74.2": "Dhammena me issariyaṃ pasatthaṃ;",
"ja537:74.3": "Anānutappaṃ paralokaṃ gamissaṃ,",
"ja537:74.4": "Yajassu yaññaṃ ada maṃ porisāda.",
"ja537:75.1": "Dinnaṃ me dānaṃ bahudhā bahūnaṃ,",
"ja537:75.2": "Santappitā samaṇabrāhmaṇā ca;",
"ja537:75.3": "Visodhito paralokassa maggo,",
"ja537:75.4": "Dhamme ṭhito ko maraṇassa bhāye.",
"ja537:76.1": "Dinnaṃ me dānaṃ bahudhā bahūnaṃ,",
"ja537:76.2": "Santappitā samaṇabrāhmaṇā ca;",
"ja537:76.3": "Anānutappaṃ paralokaṃ gamissaṃ,",
"ja537:76.4": "Yajassu yaññaṃ ada maṃ porisāda”.",
"ja537:77.1": "“Visaṃ pajānaṃ puriso adeyya,",
"ja537:77.2": "Āsīvisaṃ jalitamuggatejaṃ;",
"ja537:77.3": "Muddhāpi tassa viphaleyya sattadhā,",
"ja537:77.4": "Yo tādisaṃ saccavādiṃ adeyya.",
"ja537:78.1": "Sutvā dhammaṃ vijānanti,",
"ja537:78.2": "Narā kalyāṇapāpakaṃ;",
"ja537:78.3": "Api gāthā suṇitvāna,",
"ja537:78.4": "Dhamme me ramate mano”.",
"ja537:79.1": "“Sakideva mahārāja,",
"ja537:79.2": "sabbhi hoti samāgamo;",
"ja537:79.3": "Sā naṃ saṅgati pāleti,",
"ja537:79.4": "nāsabbhi bahu saṅgamo.",
"ja537:80.1": "Sabbhireva samāsetha,",
"ja537:80.2": "sabbhi kubbetha santhavaṃ;",
"ja537:80.3": "Sataṃ saddhammamaññāya,",
"ja537:80.4": "seyyo hoti na pāpiyo.",
"ja537:81.1": "Jīranti ve rājarathā sucittā,",
"ja537:81.2": "Atho sarīrampi jaraṃ upeti;",
"ja537:81.3": "Satañca dhammo na jaraṃ upeti,",
"ja537:81.4": "Santo have sabbhi pavedayanti.",
"ja537:82.1": "Nabhañca dūre pathavī ca dūre,",
"ja537:82.2": "Pāraṃ samuddassa tadāhu dūre;",
"ja537:82.3": "Tato have dūrataraṃ vadanti,",
"ja537:82.4": "Satañca dhammo asatañca rāja”.",
"ja537:83.1": "“Gāthā imā atthavatī subyañjanā,",
"ja537:83.2": "Subhāsitā tuyha janinda sutvā;",
"ja537:83.3": "Ānandi vitto sumano patīto,",
"ja537:83.4": "Cattāri te samma vare dadāmi”.",
"ja537:84.1": "“Yo nattano maraṇaṃ bujjhasi tuvaṃ,",
"ja537:84.2": "Hitāhitaṃ vinipātañca saggaṃ;",
"ja537:84.3": "Giddho rase duccarite niviṭṭho,",
"ja537:84.4": "Kiṃ tvaṃ varaṃ dassasi pāpadhamma.",
"ja537:85.1": "Ahañca taṃ dehi varanti vajjaṃ,",
"ja537:85.2": "Tvañcāpi datvāna avākareyya;",
"ja537:85.3": "Sandiṭṭhikaṃ kalahamimaṃ vivādaṃ,",
"ja537:85.4": "Ko paṇḍito jānamupabbajeyya”.",
"ja537:86.1": "“Na taṃ varaṃ arahati jantu dātuṃ,",
"ja537:86.2": "Yaṃ vāpi datvāna avākareyya;",
"ja537:86.3": "Varassu samma avikampamāno,",
"ja537:86.4": "Pāṇaṃ cajitvānapi dassameva”.",
"ja537:87.1": "“Ariyassa ariyena sameti sakhyaṃ,",
"ja537:87.2": "Paññassa paññāṇavatā sameti;",
"ja537:87.3": "Passeyya taṃ vassasataṃ arogaṃ,",
"ja537:87.4": "Etaṃ varānaṃ paṭhamaṃ varāmi”.",
"ja537:88.1": "“Ariyassa ariyena sameti sakhyaṃ,",
"ja537:88.2": "Paññassa paññāṇavatā sameti;",
"ja537:88.3": "Passāsi maṃ vassasataṃ arogaṃ,",
"ja537:88.4": "Etaṃ varānaṃ paṭhamaṃ dadāmi”.",
"ja537:89.1": "“Ye khattiyāse idha bhūmipālā,",
"ja537:89.2": "Muddhābhisittā katanāmadheyyā;",
"ja537:89.3": "Na tādise bhūmipatī adesi,",
"ja537:89.4": "Etaṃ varānaṃ dutiyaṃ varāmi”.",
"ja537:90.1": "“Ye khattiyāse idha bhūmipālā,",
"ja537:90.2": "Muddhābhisittā katanāmadheyyā;",
"ja537:90.3": "Na tādise bhūmipatī ademi,",
"ja537:90.4": "Etaṃ varānaṃ dutiyaṃ dadāmi”.",
"ja537:91.1": "“Parosataṃ khattiyā te gahitā,",
"ja537:91.2": "Talāvutā assumukhā rudantā;",
"ja537:91.3": "Sake te raṭṭhe paṭipādayāhi,",
"ja537:91.4": "Etaṃ varānaṃ tatiyaṃ varāmi”.",
"ja537:92.1": "“Parosataṃ khattiyā me gahitā,",
"ja537:92.2": "Talāvutā assumukhā rudantā;",
"ja537:92.3": "Sake te raṭṭhe paṭipādayāmi,",
"ja537:92.4": "Etaṃ varānaṃ tatiyaṃ dadāmi”.",
"ja537:93.1": "“Chiddaṃ te raṭṭhaṃ byathitā bhayā hi,",
"ja537:93.2": "Puthū narā leṇamanuppaviṭṭhā;",
"ja537:93.3": "Manussamaṃsaṃ viramehi rāja,",
"ja537:93.4": "Etaṃ varānaṃ catutthaṃ varāmi”.",
"ja537:94.1": "“Addhā hi so bhakkho mama manāpo,",
"ja537:94.2": "Etassa hetumhi vanaṃ paviṭṭho;",
"ja537:94.3": "Sohaṃ kathaṃ etto upārameyyaṃ,",
"ja537:94.4": "Aññaṃ varānaṃ catutthaṃ varassu”.",
"ja537:95.1": "“Na ve piyaṃ meti janinda tādiso,",
"ja537:95.2": "Attaṃ niraṃkacca piyāni sevati;",
"ja537:95.3": "Attāva seyyo paramā ca seyyo,",
"ja537:95.4": "Labbhā piyā ocitatthena pacchā”.",
"ja537:96.1": "“Piyaṃ me mānusaṃ maṃsaṃ,",
"ja537:96.2": "Sutasoma vijānahi;",
"ja537:96.3": "Namhi sakkā nivāretuṃ,",
"ja537:96.4": "Aññaṃ varaṃ samma varassu”.",
"ja537:97.1": "“Yo ve piyaṃ meti piyānurakkhī,",
"ja537:97.2": "Attaṃ niraṃkacca piyāni sevati;",
"ja537:97.3": "Soṇḍova pitvā visamissapānaṃ,",
"ja537:97.4": "Teneva so hoti dukkhī parattha.",
"ja537:98.1": "Yo cīdha saṅkhāya piyāni hitvā,",
"ja537:98.2": "Kicchenapi sevati ariyadhamme;",
"ja537:98.3": "Dukkhitova pitvāna yathosadhāni,",
"ja537:98.4": "Teneva so hoti sukhī parattha”.",
"ja537:99.1": "“Ohāyahaṃ pitaraṃ mātarañca,",
"ja537:99.2": "Manāpiye kāmaguṇe ca pañca;",
"ja537:99.3": "Etassa hetumhi vanaṃ paviṭṭho,",
"ja537:99.4": "Taṃ te varaṃ kinti mahaṃ dadāmi”.",
"ja537:100.1": "“Na paṇḍitā diguṇamāhu vākyaṃ,",
"ja537:100.2": "Saccappaṭiññāva bhavanti santo;",
"ja537:100.3": "Varassu samma iti maṃ avoca,",
"ja537:100.4": "Iccabravī tvaṃ na hi te sameti”.",
"ja537:101.1": "“Apuññalābhaṃ ayasaṃ akittiṃ,",
"ja537:101.2": "Pāpaṃ bahuṃ duccaritaṃ kilesaṃ;",
"ja537:101.3": "Manussamaṃsassa kate upāgā,",
"ja537:101.4": "Taṃ te varaṃ kinti mahaṃ dadeyyaṃ”.",
"ja537:102.1": "“Na taṃ varaṃ arahati jantu dātuṃ,",
"ja537:102.2": "Yaṃ vāpi datvāna avākareyya;",
"ja537:102.3": "Varassu samma avikampamāno,",
"ja537:102.4": "Pāṇaṃ cajitvānapi dassameva.",
"ja537:103.1": "Pāṇaṃ cajanti santo nāpi dhammaṃ,",
"ja537:103.2": "Saccappaṭiññāva bhavanti santo;",
"ja537:103.3": "Datvā varaṃ khippamavākarohi,",
"ja537:103.4": "Etena sampajja surājaseṭṭha.",
"ja537:104.1": "Caje dhanaṃ aṅgavarassa hetu,",
"ja537:104.2": "Aṅgaṃ caje jīvitaṃ rakkhamāno;",
"ja537:104.3": "Aṅgaṃ dhanaṃ jīvitañcāpi sabbaṃ,",
"ja537:104.4": "Caje naro dhammamanussaranto.",
"ja537:105.1": "Yasmā hi dhammaṃ puriso vijaññā,",
"ja537:105.2": "Ye cassa kaṅkhaṃ vinayanti santo;",
"ja537:105.3": "Taṃ hissa dīpañca parāyaṇañca,",
"ja537:105.4": "Na tena mittiṃ jirayetha pañño”.",
"ja537:106.1": "“Addhā hi so bhakkho mama manāpo,",
"ja537:106.2": "Etassa hetumhi vanaṃ paviṭṭho;",
"ja537:106.3": "Sace ca maṃ yācasi etamatthaṃ,",
"ja537:106.4": "Etampi te samma varaṃ dadāmi.",
"ja537:107.1": "Satthā ca me hosi sakhā ca mesi,",
"ja537:107.2": "Vacanampi te samma ahaṃ akāsiṃ;",
"ja537:107.3": "Tuvampi me samma karohi vākyaṃ,",
"ja537:107.4": "Ubhopi gantvāna pamocayāma”.",
"ja537:108.1": "“Satthā ca te homi sakhā ca tyamhi,",
"ja537:108.2": "Vacanampi me samma tuvaṃ akāsi;",
"ja537:108.3": "Ahampi te samma karomi vākyaṃ,",
"ja537:108.4": "Ubhopi gantvāna pamocayāma”.",
"ja537:109.1": "“Kammāsapādena viheṭhitattha,",
"ja537:109.2": "Talāvutā assumukhā rudantā;",
"ja537:109.3": "Na jātu dubbhetha imassa rañño,",
"ja537:109.4": "Saccappaṭiññaṃ me paṭissuṇātha”.",
"ja537:110.1": "“Kammāsapādena viheṭhitamhā,",
"ja537:110.2": "Talāvutā assumukhā rudantā;",
"ja537:110.3": "Na jātu dubbhema imassa rañño,",
"ja537:110.4": "Saccappaṭiññaṃ te paṭissuṇāma”.",
"ja537:111.1": "“Yathā pitā vā atha vāpi mātā,",
"ja537:111.2": "Anukampakā atthakāmā pajānaṃ;",
"ja537:111.3": "Evameva vo hotu ayañca rājā,",
"ja537:111.4": "Tumhe ca vo hotha yatheva puttā”.",
"ja537:112.1": "“Yathā pitā vā atha vāpi mātā,",
"ja537:112.2": "Anukampakā atthakāmā pajānaṃ;",
"ja537:112.3": "Evameva no hotu ayañca rājā,",
"ja537:112.4": "Mayampi hessāma yatheva puttā”.",
"ja537:113.1": "“Catuppadaṃ sakuṇañcāpi maṃsaṃ,",
"ja537:113.2": "Sūdehi randhaṃ sukataṃ suniṭṭhitaṃ;",
"ja537:113.3": "Sudhaṃva indo paribhuñjiyāna,",
"ja537:113.4": "Hitvā katheko ramasī araññe.",
"ja537:114.1": "Tā khattiyā vallivilākamajjhā,",
"ja537:114.2": "Alaṅkatā samparivārayitvā;",
"ja537:114.3": "Indaṃva devesu pamodayiṃsu,",
"ja537:114.4": "Hitvā katheko ramasī araññe.",
"ja537:115.1": "Tambūpadhāne bahugoṇakamhi,",
"ja537:115.2": "Subhamhi sabbassayanamhi saṅge;",
"ja537:115.3": "Seyyassa majjhamhi sukhaṃ sayitvā,",
"ja537:115.4": "Hitvā katheko ramasī araññe.",
"ja537:116.1": "Pāṇissaraṃ kumbhathūṇaṃ nisīthe,",
"ja537:116.2": "Athopi ve nippurisampi tūriyaṃ;",
"ja537:116.3": "Bahuṃ sugītañca suvāditañca,",
"ja537:116.4": "Hitvā katheko ramasī araññe.",
"ja537:117.1": "Uyyānasampannaṃ pahūtamālyaṃ,",
"ja537:117.2": "Migājinūpetapuraṃ surammaṃ;",
"ja537:117.3": "Hayehi nāgehi rathehupetaṃ,",
"ja537:117.4": "Hitvā katheko ramasī araññe”.",
"ja537:118.1": "“Kāḷapakkhe yathā cando,",
"ja537:118.2": "hāyateva suve suve;",
"ja537:118.3": "Kāḷapakkhūpamo rāja,",
"ja537:118.4": "asataṃ hoti samāgamo.",
"ja537:119.1": "Yathāhaṃ rasakamāgamma,",
"ja537:119.2": "sūdaṃ kāpurisādhamaṃ;",
"ja537:119.3": "Akāsiṃ pāpakaṃ kammaṃ,",
"ja537:119.4": "yena gacchāmi duggatiṃ.",
"ja537:120.1": "Sukkapakkhe yathā cando,",
"ja537:120.2": "vaḍḍhateva suve suve;",
"ja537:120.3": "Sukkapakkhūpamo rāja,",
"ja537:120.4": "sataṃ hoti samāgamo.",
"ja537:121.1": "Yathāhaṃ tuvamāgamma,",
"ja537:121.2": "sutasoma vijānahi;",
"ja537:121.3": "Kāhāmi kusalaṃ kammaṃ,",
"ja537:121.4": "yena gacchāmi suggatiṃ.",
"ja537:122.1": "Thale yathā vāri janinda vuṭṭhaṃ,",
"ja537:122.2": "Anaddhaneyyaṃ na ciraṭṭhitīkaṃ;",
"ja537:122.3": "Evampi hoti asataṃ samāgamo,",
"ja537:122.4": "Anaddhaneyyo udakaṃ thaleva.",
"ja537:123.1": "Sare yathā vāri janinda vuṭṭhaṃ,",
"ja537:123.2": "Ciraṭṭhitīkaṃ naravīraseṭṭha;",
"ja537:123.3": "Evampi ve hoti sataṃ samāgamo,",
"ja537:123.4": "Ciraṭṭhitīko udakaṃ sareva.",
"ja537:124.1": "Abyāyiko hoti sataṃ samāgamo,",
"ja537:124.2": "Yāvampi tiṭṭheyya tatheva hoti;",
"ja537:124.3": "Khippañhi veti asataṃ samāgamo,",
"ja537:124.4": "Tasmā sataṃ dhammo asabbhi ārakā”.",
"ja537:125.1": "“Na so rājā yo ajeyyaṃ jināti,",
"ja537:125.2": "Na so sakhā yo sakhāraṃ jināti;",
"ja537:125.3": "Na sā bhariyā yā patino na vibheti,",
"ja537:125.4": "Na te puttā ye na bharanti jiṇṇaṃ.",
"ja537:126.1": "Na sā sabhā yattha na santi santo,",
"ja537:126.2": "Na te santo ye na bhaṇanti dhammaṃ;",
"ja537:126.3": "Rāgañca dosañca pahāya mohaṃ,",
"ja537:126.4": "Dhammaṃ bhaṇantāva bhavanti santo.",
"ja537:127.1": "Nābhāsamānaṃ jānanti,",
"ja537:127.2": "missaṃ bālehi paṇḍitaṃ;",
"ja537:127.3": "Bhāsamānañca jānanti,",
"ja537:127.4": "desentaṃ amataṃ padaṃ.",
"ja537:128.1": "Bhāsaye jotaye dhammaṃ,",
"ja537:128.2": "Paggaṇhe isinaṃ dhajaṃ;",
"ja537:128.3": "Subhāsitaddhajā isayo,",
"ja537:128.4": "Dhammo hi isinaṃ dhajo”ti. #4212",
"ja537:129.1": "Mahāsutasomajātakaṃ pañcamaṃ.",
"ja537:130.1": "Asītinipātaṃ niṭṭhitaṃ.",
"ja537:131.1": "Tassuddānaṃ",
"ja537:132.1": "Sumukho pana haṃsavaro ca mahā,",
"ja537:132.2": "Sudhabhojaniko ca paro pavaro;",
"ja537:132.3": "Sakuṇāladijādhipativhayano,",
"ja537:132.4": "Sutasomavaruttamasavhayanoti."
}