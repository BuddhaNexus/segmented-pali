{
"ja462:1.1": "Jātaka",
"ja462:2.1": "Ekādasakanipāta",
"ja462:3.1": "Mātuposakavagga",
"ja462:4.1": "8. Saṃvarajātaka",
"ja462:5.1": "“Jānanto no mahārāja,",
"ja462:5.2": "tava sīlaṃ janādhipo;",
"ja462:5.3": "Ime kumāre pūjento,",
"ja462:5.4": "na taṃ kenaci maññatha.",
"ja462:6.1": "Tiṭṭhante no mahārāje,",
"ja462:6.2": "adu deve divaṅgate;",
"ja462:6.3": "Ñātī taṃ samanuññiṃsu,",
"ja462:6.4": "sampassaṃ atthamattano.",
"ja462:7.1": "Kena saṃvara vattena,",
"ja462:7.2": "sañjāte abhitiṭṭhasi;",
"ja462:7.3": "Kena taṃ nātivattanti,",
"ja462:7.4": "ñātisaṅghā samāgatā”.",
"ja462:8.1": "“Na rājaputta usūyāmi,",
"ja462:8.2": "samaṇānaṃ mahesinaṃ;",
"ja462:8.3": "Sakkaccaṃ te namassāmi,",
"ja462:8.4": "pāde vandāmi tādinaṃ.",
"ja462:9.1": "Te maṃ dhammaguṇe yuttaṃ,",
"ja462:9.2": "sussūsamanusūyakaṃ;",
"ja462:9.3": "Samaṇā manusāsanti,",
"ja462:9.4": "isī dhammaguṇe ratā.",
"ja462:10.1": "Tesāhaṃ vacanaṃ sutvā,",
"ja462:10.2": "samaṇānaṃ mahesinaṃ;",
"ja462:10.3": "Na kiñci atimaññāmi,",
"ja462:10.4": "dhamme me nirato mano.",
"ja462:11.1": "Hatthārohā anīkaṭṭhā,",
"ja462:11.2": "rathikā pattikārakā;",
"ja462:11.3": "Tesaṃ nappaṭibandhāmi,",
"ja462:11.4": "niviṭṭhaṃ bhattavetanaṃ.",
"ja462:12.1": "Mahāmattā ca me atthi,",
"ja462:12.2": "mantino paricārakā;",
"ja462:12.3": "Bārāṇasiṃ voharanti,",
"ja462:12.4": "bahumaṃsasurodakaṃ.",
"ja462:13.1": "Athopi vāṇijā phītā,",
"ja462:13.2": "nānāraṭṭhehi āgatā;",
"ja462:13.3": "Tesu me vihitā rakkhā,",
"ja462:13.4": "evaṃ jānāhuposatha”.",
"ja462:14.1": "“Dhammena kira ñātīnaṃ,",
"ja462:14.2": "rajjaṃ kārehi saṃvara;",
"ja462:14.3": "Medhāvī paṇḍito cāsi,",
"ja462:14.4": "athopi ñātinaṃ hito.",
"ja462:15.1": "Taṃ taṃ ñātiparibyūḷhaṃ,",
"ja462:15.2": "nānāratanamocitaṃ;",
"ja462:15.3": "Amittā nappasahanti,",
"ja462:15.4": "indaṃva asurādhipo”ti.",
"ja462:16.1": "Saṃvarajātakaṃ aṭṭhamaṃ."
}