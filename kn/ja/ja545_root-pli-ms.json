{
"ja545:1.1": "Jātaka",
"ja545:2.1": "Mahānipāta",
"ja545:3.1": "Mūgapakkhavagga",
"ja545:4.1": "8. Mahānāradakassapajātaka",
"ja545:5.1": "Ahu rājā videhānaṃ,",
"ja545:5.2": "aṅgati nāma khattiyo;",
"ja545:5.3": "Pahūtayoggo dhanimā,",
"ja545:5.4": "anantabalaporiso.",
"ja545:6.1": "So ca pannarasiṃ rattiṃ,",
"ja545:6.2": "purimayāme anāgate;",
"ja545:6.3": "Cātumāsā komudiyā,",
"ja545:6.4": "amacce sannipātayi.",
"ja545:7.1": "Paṇḍite sutasampanne,",
"ja545:7.2": "mhitapubbe vicakkhaṇe;",
"ja545:7.3": "Vijayañca sunāmañca,",
"ja545:7.4": "senāpatiṃ alātakaṃ.",
"ja545:8.1": "Tamanupucchi vedeho,",
"ja545:8.2": "“paccekaṃ brūtha saṃ ruciṃ;",
"ja545:8.3": "Cātumāsā komudajja,",
"ja545:8.4": "juṇhaṃ byapahataṃ tamaṃ;",
"ja545:8.5": "Kāyajja ratiyā rattiṃ,",
"ja545:8.6": "viharemu imaṃ utuṃ”.",
"ja545:9.1": "Tato senāpati rañño,",
"ja545:9.2": "Alāto etadabravi;",
"ja545:9.3": "“Haṭṭhaṃ yoggaṃ balaṃ sabbaṃ,",
"ja545:9.4": "Senaṃ sannāhayāmase.",
"ja545:10.1": "Niyyāma deva yuddhāya,",
"ja545:10.2": "anantabalaporisā;",
"ja545:10.3": "Ye te vasaṃ na āyanti,",
"ja545:10.4": "vasaṃ upanayāmase;",
"ja545:10.5": "Esā mayhaṃ sakā diṭṭhi,",
"ja545:10.6": "ajitaṃ ojināmase”.",
"ja545:11.1": "Alātassa vaco sutvā,",
"ja545:11.2": "sunāmo etadabravi;",
"ja545:11.3": "“Sabbe tuyhaṃ mahārāja,",
"ja545:11.4": "amittā vasamāgatā.",
"ja545:12.1": "Nikkhittasatthā paccatthā,",
"ja545:12.2": "nivātamanuvattare;",
"ja545:12.3": "Uttamo ussavo ajja,",
"ja545:12.4": "na yuddhaṃ mama ruccati.",
"ja545:13.1": "Annapānañca khajjañca,",
"ja545:13.2": "khippaṃ abhiharantu te;",
"ja545:13.3": "Ramassu deva kāmehi,",
"ja545:13.4": "naccagīte suvādite”.",
"ja545:14.1": "Sunāmassa vaco sutvā,",
"ja545:14.2": "vijayo etadabravi;",
"ja545:14.3": "“Sabbe kāmā mahārāja,",
"ja545:14.4": "niccaṃ tava mupaṭṭhitā.",
"ja545:15.1": "Na hete dullabhā deva,",
"ja545:15.2": "tava kāmehi modituṃ;",
"ja545:15.3": "Sadāpi kāmā sulabhā,",
"ja545:15.4": "netaṃ cittamataṃ mama.",
"ja545:16.1": "Samaṇaṃ brāhmaṇaṃ vāpi,",
"ja545:16.2": "upāsemu bahussutaṃ;",
"ja545:16.3": "Yo najja vinaye kaṅkhaṃ,",
"ja545:16.4": "atthadhammavidū ise”.",
"ja545:17.1": "Vijayassa vaco sutvā,",
"ja545:17.2": "rājā aṅgati mabravi;",
"ja545:17.3": "“Yathā vijayo bhaṇati,",
"ja545:17.4": "mayhampetaṃva ruccati.",
"ja545:18.1": "Samaṇaṃ brāhmaṇaṃ vāpi,",
"ja545:18.2": "upāsemu bahussutaṃ;",
"ja545:18.3": "Yo najja vinaye kaṅkhaṃ,",
"ja545:18.4": "atthadhammavidū ise.",
"ja545:19.1": "Sabbeva santā karotha matiṃ,",
"ja545:19.2": "Kaṃ upāsemu paṇḍitaṃ;",
"ja545:19.3": "Yo najja vinaye kaṅkhaṃ,",
"ja545:19.4": "Atthadhammavidū ise”.",
"ja545:20.1": "Vedehassa vaco sutvā,",
"ja545:20.2": "alāto etadabravi;",
"ja545:20.3": "“Atthāyaṃ migadāyasmiṃ,",
"ja545:20.4": "acelo dhīrasammato.",
"ja545:21.1": "Guṇo kassapagottāyaṃ,",
"ja545:21.2": "suto citrakathī gaṇī;",
"ja545:21.3": "Taṃ deva payirupāsemu,",
"ja545:21.4": "so no kaṅkhaṃ vinessati”.",
"ja545:22.1": "Alātassa vaco sutvā,",
"ja545:22.2": "rājā codesi sārathiṃ;",
"ja545:22.3": "“Migadāyaṃ gamissāma,",
"ja545:22.4": "yuttaṃ yānaṃ idhānaya”.",
"ja545:23.1": "Tassa yānaṃ ayojesuṃ,",
"ja545:23.2": "dantaṃ rūpiyapakkharaṃ;",
"ja545:23.3": "Sukkamaṭṭhaparivāraṃ,",
"ja545:23.4": "paṇḍaraṃ dosināmukhaṃ.",
"ja545:24.1": "Tatrāsuṃ kumudāyuttā,",
"ja545:24.2": "cattāro sindhavā hayā;",
"ja545:24.3": "Anilūpamasamuppātā,",
"ja545:24.4": "sudantā soṇṇamālino.",
"ja545:25.1": "Setacchattaṃ setaratho,",
"ja545:25.2": "setassā setabījanī;",
"ja545:25.3": "Vedeho sahamaccehi,",
"ja545:25.4": "niyyaṃ candova sobhati.",
"ja545:26.1": "Tamanuyāyiṃsu bahavo,",
"ja545:26.2": "indikhaggadharā balī;",
"ja545:26.3": "Assapiṭṭhigatā vīrā,",
"ja545:26.4": "narā naravarādhipaṃ.",
"ja545:27.1": "So muhuttaṃva yāyitvā,",
"ja545:27.2": "yānā oruyha khattiyo;",
"ja545:27.3": "Vedeho sahamaccehi,",
"ja545:27.4": "pattī guṇamupāgami.",
"ja545:28.1": "Yepi tattha tadā āsuṃ,",
"ja545:28.2": "brāhmaṇibbhā samāgatā;",
"ja545:28.3": "Na te apanayī rājā,",
"ja545:28.4": "akataṃ bhūmimāgate.",
"ja545:29.1": "Tato so mudukā bhisiyā,",
"ja545:29.2": "muducittakasanthate;",
"ja545:29.3": "Mudupaccatthate rājā,",
"ja545:29.4": "ekamantaṃ upāvisi.",
"ja545:30.1": "Nisajja rājā sammodi,",
"ja545:30.2": "kathaṃ sāraṇiyaṃ tato;",
"ja545:30.3": "“Kacci yāpaniyaṃ bhante,",
"ja545:30.4": "vātānamaviyaggatā.",
"ja545:31.1": "Kacci akasirā vutti,",
"ja545:31.2": "labhasi piṇḍayāpanaṃ;",
"ja545:31.3": "Apābādho casi kacci,",
"ja545:31.4": "cakkhuṃ na parihāyati”.",
"ja545:32.1": "Taṃ guṇo paṭisammodi,",
"ja545:32.2": "vedehaṃ vinaye rataṃ;",
"ja545:32.3": "“Yāpanīyaṃ mahārāja,",
"ja545:32.4": "sabbametaṃ tadūbhayaṃ.",
"ja545:33.1": "Kacci tuyhampi vedeha,",
"ja545:33.2": "paccantā na balīyare;",
"ja545:33.3": "Kacci arogaṃ yoggaṃ te,",
"ja545:33.4": "kacci vahati vāhanaṃ;",
"ja545:33.5": "Kacci te byādhayo natthi,",
"ja545:33.6": "sarīrassupatāpiyā”.",
"ja545:34.1": "Paṭisammodito rājā,",
"ja545:34.2": "tato pucchi anantarā;",
"ja545:34.3": "Atthaṃ dhammañca ñāyañca,",
"ja545:34.4": "dhammakāmo rathesabho.",
"ja545:35.1": "“Kathaṃ dhammaṃ care macco,",
"ja545:35.2": "mātāpitūsu kassapa;",
"ja545:35.3": "Kathaṃ care ācariye,",
"ja545:35.4": "puttadāre kathaṃ care.",
"ja545:36.1": "Kathaṃ careyya vuḍḍhesu,",
"ja545:36.2": "kathaṃ samaṇabrāhmaṇe;",
"ja545:36.3": "Kathañca balakāyasmiṃ,",
"ja545:36.4": "kathaṃ janapade care.",
"ja545:37.1": "Kathaṃ dhammaṃ caritvāna,",
"ja545:37.2": "maccā gacchanti suggatiṃ;",
"ja545:37.3": "Kathañceke adhammaṭṭhā,",
"ja545:37.4": "patanti nirayaṃ atho”.",
"ja545:38.1": "Vedehassa vaco sutvā,",
"ja545:38.2": "kassapo etadabravi;",
"ja545:38.3": "“Suṇohi me mahārāja,",
"ja545:38.4": "saccaṃ avitathaṃ padaṃ.",
"ja545:39.1": "Natthi dhammacaritassa,",
"ja545:39.2": "phalaṃ kalyāṇapāpakaṃ;",
"ja545:39.3": "Natthi deva paro loko,",
"ja545:39.4": "ko tato hi idhāgato.",
"ja545:40.1": "Natthi deva pitaro vā,",
"ja545:40.2": "kuto mātā kuto pitā;",
"ja545:40.3": "Natthi ācariyo nāma,",
"ja545:40.4": "adantaṃ ko damessati.",
"ja545:41.1": "Samatulyāni bhūtāni,",
"ja545:41.2": "natthi jeṭṭhāpacāyikā;",
"ja545:41.3": "Natthi balaṃ vīriyaṃ vā,",
"ja545:41.4": "kuto uṭṭhānaporisaṃ;",
"ja545:41.5": "Niyatāni hi bhūtāni,",
"ja545:41.6": "yathā goṭaviso tathā.",
"ja545:42.1": "Laddheyyaṃ labhate macco,",
"ja545:42.2": "tattha dānaphalaṃ kuto;",
"ja545:42.3": "Natthi dānaphalaṃ deva,",
"ja545:42.4": "avaso devavīriyo.",
"ja545:43.1": "Bālehi dānaṃ paññattaṃ,",
"ja545:43.2": "paṇḍitehi paṭicchitaṃ;",
"ja545:43.3": "Avasā denti dhīrānaṃ,",
"ja545:43.4": "bālā paṇḍitamānino.",
"ja545:44.1": "Sattime sassatā kāyā,",
"ja545:44.2": "acchejjā avikopino;",
"ja545:44.3": "Tejo pathavī āpo ca,",
"ja545:44.4": "vāyo sukhaṃ dukhañcime;",
"ja545:44.5": "Jīve ca sattime kāyā,",
"ja545:44.6": "yesaṃ chettā na vijjati.",
"ja545:45.1": "Natthi hantā va chettā vā,",
"ja545:45.2": "haññe yevāpi koci naṃ;",
"ja545:45.3": "Antareneva kāyānaṃ,",
"ja545:45.4": "satthāni vītivattare.",
"ja545:46.1": "Yo cāpi siramādāya,",
"ja545:46.2": "paresaṃ nisitāsinā;",
"ja545:46.3": "Na so chindati te kāye,",
"ja545:46.4": "tattha pāpaphalaṃ kuto.",
"ja545:47.1": "Cullāsītimahākappe,",
"ja545:47.2": "sabbe sujjhanti saṃsaraṃ;",
"ja545:47.3": "Anāgate tamhi kāle,",
"ja545:47.4": "saññatopi na sujjhati.",
"ja545:48.1": "Caritvāpi bahuṃ bhadraṃ,",
"ja545:48.2": "neva sujjhantināgate;",
"ja545:48.3": "Pāpañcepi bahuṃ katvā,",
"ja545:48.4": "taṃ khaṇaṃ nātivattare.",
"ja545:49.1": "Anupubbena no suddhi,",
"ja545:49.2": "kappānaṃ cullasītiyā;",
"ja545:49.3": "Niyatiṃ nātivattāma,",
"ja545:49.4": "velantamiva sāgaro”.",
"ja545:50.1": "Kassapassa vaco sutvā,",
"ja545:50.2": "alāto etadabravi;",
"ja545:50.3": "“Yathā bhadanto bhaṇati,",
"ja545:50.4": "mayhampetaṃva ruccati.",
"ja545:51.1": "Ahampi purimaṃ jātiṃ,",
"ja545:51.2": "sare saṃsaritattano;",
"ja545:51.3": "Piṅgalo nāmahaṃ āsiṃ,",
"ja545:51.4": "luddo goghātako pure.",
"ja545:52.1": "Bārāṇasiyaṃ phītāyaṃ,",
"ja545:52.2": "bahuṃ pāpaṃ kataṃ mayā;",
"ja545:52.3": "Bahū mayā hatā pāṇā,",
"ja545:52.4": "mahiṃsā sūkarā ajā.",
"ja545:53.1": "Tato cuto idha jāto,",
"ja545:53.2": "iddhe senāpatīkule;",
"ja545:53.3": "Natthi nūna phalaṃ pāpaṃ,",
"ja545:53.4": "yohaṃ na nirayaṃ gato”.",
"ja545:54.1": "Athettha bījako nāma,",
"ja545:54.2": "dāso āsi paṭaccarī;",
"ja545:54.3": "Uposathaṃ upavasanto,",
"ja545:54.4": "guṇasantikupāgami.",
"ja545:55.1": "Kassapassa vaco sutvā,",
"ja545:55.2": "alātassa ca bhāsitaṃ;",
"ja545:55.3": "Passasanto muhuṃ uṇhaṃ,",
"ja545:55.4": "rudaṃ assūni vattayi.",
"ja545:56.1": "Tamanupucchi vedeho,",
"ja545:56.2": "“kimatthaṃ samma rodasi;",
"ja545:56.3": "Kiṃ te sutaṃ vā diṭṭhaṃ vā,",
"ja545:56.4": "kiṃ maṃ vedesi vedanaṃ”.",
"ja545:57.1": "Vedehassa vaco sutvā,",
"ja545:57.2": "bījako etadabravi;",
"ja545:57.3": "“Natthi me vedanā dukkhā,",
"ja545:57.4": "mahārāja suṇohi me.",
"ja545:58.1": "Ahampi purimaṃ jātiṃ,",
"ja545:58.2": "sarāmi sukhamattano;",
"ja545:58.3": "Sāketāhaṃ pure āsiṃ,",
"ja545:58.4": "bhāvaseṭṭhi guṇe rato.",
"ja545:59.1": "Sammato brāhmaṇibbhānaṃ,",
"ja545:59.2": "saṃvibhāgarato suci;",
"ja545:59.3": "Na cāpi pāpakaṃ kammaṃ,",
"ja545:59.4": "sarāmi katamattano.",
"ja545:60.1": "Tato cutāhaṃ vedeha,",
"ja545:60.2": "idha jāto duritthiyā;",
"ja545:60.3": "Gabbhamhi kumbhadāsiyā,",
"ja545:60.4": "yato jāto suduggato.",
"ja545:61.1": "Evampi duggato santo,",
"ja545:61.2": "samacariyaṃ adhiṭṭhito;",
"ja545:61.3": "Upaḍḍhabhāgaṃ bhattassa,",
"ja545:61.4": "dadāmi yo me icchati.",
"ja545:62.1": "Cātuddasiṃ pañcadasiṃ,",
"ja545:62.2": "sadā upavasāmahaṃ;",
"ja545:62.3": "Na cāpi bhūte hiṃsāmi,",
"ja545:62.4": "theyyañcāpi vivajjayiṃ.",
"ja545:63.1": "Sabbameva hi nūnetaṃ,",
"ja545:63.2": "suciṇṇaṃ bhavati nipphalaṃ;",
"ja545:63.3": "Niratthaṃ maññidaṃ sīlaṃ,",
"ja545:63.4": "alāto bhāsatī yathā.",
"ja545:64.1": "Kalimeva nūna gaṇhāmi,",
"ja545:64.2": "asippo dhuttako yathā;",
"ja545:64.3": "Kaṭaṃ alāto gaṇhāti,",
"ja545:64.4": "kitavosikkhito yathā.",
"ja545:65.1": "Dvāraṃ nappaṭipassāmi,",
"ja545:65.2": "yena gacchāmi suggatiṃ;",
"ja545:65.3": "Tasmā rāja parodāmi,",
"ja545:65.4": "sutvā kassapabhāsitaṃ”.",
"ja545:66.1": "Bījakassa vaco sutvā,",
"ja545:66.2": "rājā aṅgati mabravi;",
"ja545:66.3": "“Natthi dvāraṃ sugatiyā,",
"ja545:66.4": "niyatiṃ kaṅkha bījaka.",
"ja545:67.1": "Sukhaṃ vā yadi vā dukkhaṃ,",
"ja545:67.2": "niyatiyā kira labbhati;",
"ja545:67.3": "Saṃsārasuddhi sabbesaṃ,",
"ja545:67.4": "mā turittho anāgate.",
"ja545:68.1": "Ahampi pubbe kalyāṇo,",
"ja545:68.2": "brāhmaṇibbhesu byāvaṭo;",
"ja545:68.3": "Vohāramanusāsanto,",
"ja545:68.4": "ratihīno tadantarā.",
"ja545:69.1": "Punapi bhante dakkhemu,",
"ja545:69.2": "saṅgati ce bhavissati”;",
"ja545:69.3": "Idaṃ vatvāna vedeho,",
"ja545:69.4": "paccagā sanivesanaṃ.",
"ja545:70.1": "Tato ratyā vivasāne,",
"ja545:70.2": "upaṭṭhānamhi aṅgati;",
"ja545:70.3": "Amacce sannipātetvā,",
"ja545:70.4": "idaṃ vacanamabravi.",
"ja545:71.1": "“Candake me vimānasmiṃ,",
"ja545:71.2": "sadā kāme vidhentu me;",
"ja545:71.3": "Mā upagacchuṃ atthesu,",
"ja545:71.4": "guyhappakāsiyesu ca.",
"ja545:72.1": "Vijayo ca sunāmo ca,",
"ja545:72.2": "senāpati alātako;",
"ja545:72.3": "Ete atthe nisīdantu,",
"ja545:72.4": "vohārakusalā tayo”.",
"ja545:73.1": "Idaṃ vatvāna vedeho,",
"ja545:73.2": "“kāmeva bahumaññatha;",
"ja545:73.3": "Na cāpi brāhmaṇibbhesu,",
"ja545:73.4": "atthe kismiñci byāvaṭo”.",
"ja545:74.1": "Tato dvesattarattassa,",
"ja545:74.2": "vedehassatrajā piyā;",
"ja545:74.3": "Rājakaññā rucā nāma,",
"ja545:74.4": "dhātimātaramabravi.",
"ja545:75.1": "“Alaṅkarotha maṃ khippaṃ,",
"ja545:75.2": "sakhiyo cālaṅkarontu me;",
"ja545:75.3": "Suve pannaraso dibyo,",
"ja545:75.4": "gacchaṃ issarasantike”.",
"ja545:76.1": "Tassā mālyaṃ abhihariṃsu,",
"ja545:76.2": "candanañca mahārahaṃ;",
"ja545:76.3": "Maṇisaṅkhamuttāratanaṃ,",
"ja545:76.4": "nānāratte ca ambare.",
"ja545:77.1": "Tañca soṇṇamaye pīṭhe,",
"ja545:77.2": "nisinnaṃ bahukitthiyo;",
"ja545:77.3": "Parikiriya pasobhiṃsu,",
"ja545:77.4": "rucaṃ ruciravaṇṇiniṃ.",
"ja545:78.1": "Sā ca sakhimajjhagatā,",
"ja545:78.2": "sabbābharaṇabhūsitā;",
"ja545:78.3": "Sateratā abbhamiva,",
"ja545:78.4": "candakaṃ pāvisī rucā.",
"ja545:79.1": "Upasaṅkamitvā vedehaṃ,",
"ja545:79.2": "vanditvā vinaye rataṃ;",
"ja545:79.3": "Suvaṇṇakhacite pīṭhe,",
"ja545:79.4": "ekamantaṃ upāvisi.",
"ja545:80.1": "Tañca disvāna vedeho,",
"ja545:80.2": "accharānaṃva saṅgamaṃ;",
"ja545:80.3": "Rucaṃ sakhimajjhagataṃ,",
"ja545:80.4": "idaṃ vacanamabravi.",
"ja545:81.1": "“Kacci ramasi pāsāde,",
"ja545:81.2": "antopokkharaṇiṃ pati;",
"ja545:81.3": "Kacci bahuvidhaṃ khajjaṃ,",
"ja545:81.4": "sadā abhiharanti te.",
"ja545:82.1": "Kacci bahuvidhaṃ mālyaṃ,",
"ja545:82.2": "ocinitvā kumāriyo;",
"ja545:82.3": "Gharake karotha paccekaṃ,",
"ja545:82.4": "khiḍḍāratiratā muhuṃ.",
"ja545:83.1": "Kena vā vikalaṃ tuyhaṃ,",
"ja545:83.2": "kiṃ khippaṃ āharantu te;",
"ja545:83.3": "Manokarassu kuḍḍamukhī,",
"ja545:83.4": "api candasamamhipi”.",
"ja545:84.1": "Vedehassa vaco sutvā,",
"ja545:84.2": "rucā pitaramabravi;",
"ja545:84.3": "“Sabbametaṃ mahārāja,",
"ja545:84.4": "labbhatissarasantike.",
"ja545:85.1": "Suve pannaraso dibyo,",
"ja545:85.2": "sahassaṃ āharantu me;",
"ja545:85.3": "Yathādinnañca dassāmi,",
"ja545:85.4": "dānaṃ sabbavanīsvahaṃ”.",
"ja545:86.1": "Rucāya vacanaṃ sutvā,",
"ja545:86.2": "rājā aṅgati mabravi;",
"ja545:86.3": "“Bahuṃ vināsitaṃ vittaṃ,",
"ja545:86.4": "niratthaṃ aphalaṃ tayā.",
"ja545:87.1": "Uposathe vasaṃ niccaṃ,",
"ja545:87.2": "annapānaṃ na bhuñjasi;",
"ja545:87.3": "Niyatetaṃ abhuttabbaṃ,",
"ja545:87.4": "natthi puññaṃ abhuñjato.",
"ja545:88.1": "Bījakopi hi sutvāna,",
"ja545:88.2": "tadā kassapabhāsitaṃ;",
"ja545:88.3": "Passasanto muhuṃ uṇhaṃ,",
"ja545:88.4": "rudaṃ assūni vattayi.",
"ja545:89.1": "Yāva ruce jīvamānā,",
"ja545:89.2": "mā bhattamapanāmayi;",
"ja545:89.3": "Natthi bhadde paro loko,",
"ja545:89.4": "kiṃ niratthaṃ vihaññasi”.",
"ja545:90.1": "Vedehassa vaco sutvā,",
"ja545:90.2": "rucā ruciravaṇṇinī;",
"ja545:90.3": "Jānaṃ pubbāparaṃ dhammaṃ,",
"ja545:90.4": "pitaraṃ etadabravi.",
"ja545:91.1": "“Sutameva pure āsi,",
"ja545:91.2": "sakkhi diṭṭhamidaṃ mayā;",
"ja545:91.3": "Bālūpasevī yo hoti,",
"ja545:91.4": "bālova samapajjatha.",
"ja545:92.1": "Mūḷho hi mūḷhamāgamma,",
"ja545:92.2": "bhiyyo mohaṃ nigacchati;",
"ja545:92.3": "Patirūpaṃ alātena,",
"ja545:92.4": "bījakena ca muyhituṃ.",
"ja545:93.1": "Tvañca devāsi sappañño,",
"ja545:93.2": "dhiro atthassa kovido;",
"ja545:93.3": "Kathaṃ bālehi sadisaṃ,",
"ja545:93.4": "hīnadiṭṭhiṃ upāgami.",
"ja545:94.1": "Sacepi saṃsārapathena sujjhati,",
"ja545:94.2": "Niratthiyā pabbajjā guṇassa;",
"ja545:94.3": "Kīṭova aggiṃ jalitaṃ apāpataṃ,",
"ja545:94.4": "Upapajjati mohamūḷho naggabhāvaṃ.",
"ja545:95.1": "Saṃsārasuddhīti pure niviṭṭhā,",
"ja545:95.2": "Kammaṃ vidūsenti bahū ajānaṃ;",
"ja545:95.3": "Pubbe kalī duggahitovanatthā,",
"ja545:95.4": "Dummo ca yā balisā ambujova.",
"ja545:96.1": "Upamaṃ te karissāmi,",
"ja545:96.2": "mahārāja tavatthiyā;",
"ja545:96.3": "Upamāya midhekacce,",
"ja545:96.4": "atthaṃ jānanti paṇḍitā.",
"ja545:97.1": "Vāṇijānaṃ yathā nāvā,",
"ja545:97.2": "appamāṇabharā garu;",
"ja545:97.3": "Atibhāraṃ samādāya,",
"ja545:97.4": "aṇṇave avasīdati.",
"ja545:98.1": "Evameva naro pāpaṃ,",
"ja545:98.2": "thokaṃ thokampi ācinaṃ;",
"ja545:98.3": "Atibhāraṃ samādāya,",
"ja545:98.4": "niraye avasīdati.",
"ja545:99.1": "Na tāva bhāro paripūro,",
"ja545:99.2": "alātassa mahīpati;",
"ja545:99.3": "Ācināti ca taṃ pāpaṃ,",
"ja545:99.4": "yena gacchati duggatiṃ.",
"ja545:100.1": "Pubbevassa kataṃ puññaṃ,",
"ja545:100.2": "alātassa mahīpati;",
"ja545:100.3": "Tasseva deva nissando,",
"ja545:100.4": "yañceso labhate sukhaṃ.",
"ja545:101.1": "Khīyate cassa taṃ puññaṃ,",
"ja545:101.2": "tathā hi aguṇe rato;",
"ja545:101.3": "Ujumaggaṃ avahāya,",
"ja545:101.4": "kummaggamanudhāvati.",
"ja545:102.1": "Tulā yathā paggahitā,",
"ja545:102.2": "ohite tulamaṇḍale;",
"ja545:102.3": "Unnameti tulāsīsaṃ,",
"ja545:102.4": "bhāre oropite sati.",
"ja545:103.1": "Evameva naro puññaṃ,",
"ja545:103.2": "thokaṃ thokampi ācinaṃ;",
"ja545:103.3": "Saggātimāno dāsova,",
"ja545:103.4": "bījako sātave rato.",
"ja545:104.1": "Yamajja bījako dāso,",
"ja545:104.2": "dukkhaṃ passati attani;",
"ja545:104.3": "Pubbevassa kataṃ pāpaṃ,",
"ja545:104.4": "tameso paṭisevati.",
"ja545:105.1": "Khīyate cassa taṃ pāpaṃ,",
"ja545:105.2": "tathā hi vinaye rato;",
"ja545:105.3": "Kassapañca samāpajja,",
"ja545:105.4": "mā hevuppathamāgamā.",
"ja545:106.1": "Yaṃ yañhi rāja bhajati,",
"ja545:106.2": "santaṃ vā yadi vā asaṃ;",
"ja545:106.3": "Sīlavantaṃ visīlaṃ vā,",
"ja545:106.4": "vasaṃ tasseva gacchati.",
"ja545:107.1": "Yādisaṃ kurute mittaṃ,",
"ja545:107.2": "yādisaṃ cūpasevati;",
"ja545:107.3": "Sopi tādisako hoti,",
"ja545:107.4": "sahavāso hi tādiso.",
"ja545:108.1": "Sevamāno sevamānaṃ,",
"ja545:108.2": "samphuṭṭho samphusaṃ paraṃ;",
"ja545:108.3": "Saro diddho kalāpaṃva,",
"ja545:108.4": "alittamupalimpati;",
"ja545:108.5": "Upalepabhayā dhīro,",
"ja545:108.6": "neva pāpasakhā siyā.",
"ja545:109.1": "Pūtimacchaṃ kusaggena,",
"ja545:109.2": "yo naro upanayhati;",
"ja545:109.3": "Kusāpi pūti vāyanti,",
"ja545:109.4": "evaṃ bālūpasevanā.",
"ja545:110.1": "Tagarañca palāsena,",
"ja545:110.2": "yo naro upanayhati;",
"ja545:110.3": "Pattāpi surabhi vāyanti,",
"ja545:110.4": "evaṃ dhīrūpasevanā.",
"ja545:111.1": "Tasmā pattapuṭasseva,",
"ja545:111.2": "ñatvā sampākamattano;",
"ja545:111.3": "Asante nopaseveyya,",
"ja545:111.4": "sante seveyya paṇḍito;",
"ja545:111.5": "Asanto nirayaṃ nenti,",
"ja545:111.6": "santo pāpenti suggatiṃ.",
"ja545:112.1": "Ahampi jātiyo satta,",
"ja545:112.2": "sare saṃsaritattano;",
"ja545:112.3": "Anāgatāpi satteva,",
"ja545:112.4": "yā gamissaṃ ito cutā.",
"ja545:113.1": "Yā me sā sattamī jāti,",
"ja545:113.2": "ahu pubbe janādhipa;",
"ja545:113.3": "Kammāraputto magadhesu,",
"ja545:113.4": "ahuṃ rājagahe pure.",
"ja545:114.1": "Pāpaṃ sahāyamāgamma,",
"ja545:114.2": "bahuṃ pāpaṃ kataṃ mayā;",
"ja545:114.3": "Paradārassa heṭhento,",
"ja545:114.4": "carimhā amarā viya.",
"ja545:115.1": "Taṃ kammaṃ nihitaṃ aṭṭhā,",
"ja545:115.2": "bhasmacchannova pāvako;",
"ja545:115.3": "Atha aññehi kammehi,",
"ja545:115.4": "ajāyiṃ vaṃsabhūmiyaṃ.",
"ja545:116.1": "Kosambiyaṃ seṭṭhikule,",
"ja545:116.2": "iddhe phīte mahaddhane;",
"ja545:116.3": "Ekaputto mahārāja,",
"ja545:116.4": "niccaṃ sakkatapūjito.",
"ja545:117.1": "Tattha mittaṃ asevissaṃ,",
"ja545:117.2": "sahāyaṃ sātave rataṃ;",
"ja545:117.3": "Paṇḍitaṃ sutasampannaṃ,",
"ja545:117.4": "so maṃ atthe nivesayi.",
"ja545:118.1": "Cātuddasiṃ pañcadasiṃ,",
"ja545:118.2": "bahuṃ rattiṃ upāvasiṃ;",
"ja545:118.3": "Taṃ kammaṃ nihitaṃ aṭṭhā,",
"ja545:118.4": "nidhīva udakantike.",
"ja545:119.1": "Atha pāpāna kammānaṃ,",
"ja545:119.2": "Yametaṃ magadhe kataṃ;",
"ja545:119.3": "Phalaṃ pariyāga maṃ pacchā,",
"ja545:119.4": "Bhutvā duṭṭhavisaṃ yathā.",
"ja545:120.1": "Tato cutāhaṃ vedeha,",
"ja545:120.2": "roruve niraye ciraṃ;",
"ja545:120.3": "Sakammunā apaccissaṃ,",
"ja545:120.4": "taṃ saraṃ na sukhaṃ labhe.",
"ja545:121.1": "Bahuvassagaṇe tattha,",
"ja545:121.2": "khepayitvā bahuṃ dukhaṃ;",
"ja545:121.3": "Bhinnāgate ahuṃ rāja,",
"ja545:121.4": "chagalo uddhatapphalo.",
"ja545:122.1": "Sātaputtā mayā vūḷhā,",
"ja545:122.2": "piṭṭhiyā ca rathena ca;",
"ja545:122.3": "Tassa kammassa nissando,",
"ja545:122.4": "paradāragamanassa me.",
"ja545:123.1": "Tato cutāhaṃ vedeha,",
"ja545:123.2": "kapi āsiṃ brahāvane;",
"ja545:123.3": "Niluñcitaphaloyeva,",
"ja545:123.4": "yūthapena pagabbhinā;",
"ja545:123.5": "Tassa kammassa nissando,",
"ja545:123.6": "paradāragamanassa me.",
"ja545:124.1": "Tato cutāhaṃ vedeha,",
"ja545:124.2": "dassanesu pasū ahuṃ;",
"ja545:124.3": "Niluñcito javo bhadro,",
"ja545:124.4": "yoggaṃ vūḷhaṃ ciraṃ mayā;",
"ja545:124.5": "Tassa kammassa nissando,",
"ja545:124.6": "paradāragamanassa me.",
"ja545:125.1": "Tato cutāhaṃ vedeha,",
"ja545:125.2": "vajjīsu kulamāgamā;",
"ja545:125.3": "Nevitthī na pumā āsiṃ,",
"ja545:125.4": "manussatte sudullabhe;",
"ja545:125.5": "Tassa kammassa nissando,",
"ja545:125.6": "paradāragamanassa me.",
"ja545:126.1": "Tato cutāhaṃ vedeha,",
"ja545:126.2": "ajāyiṃ nandane vane;",
"ja545:126.3": "Bhavane tāvatiṃsāhaṃ,",
"ja545:126.4": "accharā kāmavaṇṇinī.",
"ja545:127.1": "Vicittavatthābharaṇā,",
"ja545:127.2": "āmuttamaṇikuṇḍalā;",
"ja545:127.3": "Kusalā naccagītassa,",
"ja545:127.4": "sakkassa paricārikā.",
"ja545:128.1": "Tattha ṭhitāhaṃ vedeha,",
"ja545:128.2": "sarāmi jātiyo imā;",
"ja545:128.3": "Anāgatāpi satteva,",
"ja545:128.4": "yā gamissaṃ ito cutā.",
"ja545:129.1": "Pariyāgataṃ taṃ kusalaṃ,",
"ja545:129.2": "yaṃ me kosambiyaṃ kataṃ;",
"ja545:129.3": "Deve ceva manusse ca,",
"ja545:129.4": "sandhāvissaṃ ito cutā.",
"ja545:130.1": "Satta jacco mahārāja,",
"ja545:130.2": "niccaṃ sakkatapūjitā;",
"ja545:130.3": "Thībhāvāpi na muccissaṃ,",
"ja545:130.4": "chaṭṭhā nigatiyo imā.",
"ja545:131.1": "Sattamī ca gati deva,",
"ja545:131.2": "devaputto mahiddhiko;",
"ja545:131.3": "Pumā devo bhavissāmi,",
"ja545:131.4": "devakāyasmimuttamo.",
"ja545:132.1": "Ajjāpi santānamayaṃ,",
"ja545:132.2": "mālaṃ ganthenti nandane;",
"ja545:132.3": "Devaputto javo nāma,",
"ja545:132.4": "yo me mālaṃ paṭicchati.",
"ja545:133.1": "Muhutto viya so dibyo,",
"ja545:133.2": "idha vassāni soḷasa;",
"ja545:133.3": "Rattindivo ca so dibyo,",
"ja545:133.4": "mānusiṃ saradosataṃ.",
"ja545:134.1": "Iti kammāni anventi,",
"ja545:134.2": "asaṅkheyyāpi jātiyo;",
"ja545:134.3": "Kalyāṇaṃ yadi vā pāpaṃ,",
"ja545:134.4": "na hi kammaṃ vinassati.",
"ja545:135.1": "Yo icche puriso hotuṃ,",
"ja545:135.2": "jātiṃ jātiṃ punappunaṃ;",
"ja545:135.3": "Paradāraṃ vivajjeyya,",
"ja545:135.4": "dhotapādova kaddamaṃ.",
"ja545:136.1": "Yā icche puriso hotuṃ,",
"ja545:136.2": "jātiṃ jātiṃ punappunaṃ;",
"ja545:136.3": "Sāmikaṃ apacāyeyya,",
"ja545:136.4": "indaṃva paricārikā.",
"ja545:137.1": "Yo icche dibyabhogañca,",
"ja545:137.2": "dibbamāyuṃ yasaṃ sukhaṃ;",
"ja545:137.3": "Pāpāni parivajjetvā,",
"ja545:137.4": "tividhaṃ dhammamācare.",
"ja545:138.1": "Kāyena vācā manasā,",
"ja545:138.2": "appamatto vicakkhaṇo;",
"ja545:138.3": "Attano hoti atthāya,",
"ja545:138.4": "itthī vā yadi vā pumā.",
"ja545:139.1": "Ye kecime mānujā jīvaloke,",
"ja545:139.2": "Yasassino sabbasamantabhogā;",
"ja545:139.3": "Asaṃsayaṃ tehi pure suciṇṇaṃ,",
"ja545:139.4": "Kammassakāse puthu sabbasattā.",
"ja545:140.1": "Iṅghānucintesi sayampi deva,",
"ja545:140.2": "Kutonidānā te imā janinda;",
"ja545:140.3": "Yā te imā accharāsannikāsā,",
"ja545:140.4": "Alaṅkatā kañcanajālachannā”.",
"ja545:141.1": "Iccevaṃ pitaraṃ kaññā,",
"ja545:141.2": "rucā tosesi aṅgatiṃ;",
"ja545:141.3": "Mūḷhassa maggamācikkhi,",
"ja545:141.4": "dhammamakkhāsi subbatā.",
"ja545:142.1": "Athāgamā brahmalokā,",
"ja545:142.2": "nārado mānusiṃ pajaṃ;",
"ja545:142.3": "Jambudīpaṃ avekkhanto,",
"ja545:142.4": "addā rājānamaṅgatiṃ.",
"ja545:143.1": "Tato patiṭṭhā pāsāde,",
"ja545:143.2": "vedehassa puratthato;",
"ja545:143.3": "Tañca disvānānuppattaṃ,",
"ja545:143.4": "rucā isimavandatha.",
"ja545:144.1": "Athāsanamhā oruyha,",
"ja545:144.2": "rājā byathitamānaso;",
"ja545:144.3": "Nāradaṃ paripucchanto,",
"ja545:144.4": "idaṃ vacanamabravi.",
"ja545:145.1": "“Kuto nu āgacchasi devavaṇṇi,",
"ja545:145.2": "Obhāsayaṃ sabbadisā candimāva;",
"ja545:145.3": "Akkhāhi me pucchito nāmagottaṃ,",
"ja545:145.4": "Kathaṃ taṃ jānanti manussaloke”.",
"ja545:146.1": "“Ahañhi devato idāni emi,",
"ja545:146.2": "Obhāsayaṃ sabbadisā candimāva;",
"ja545:146.3": "Akkhāmi te pucchito nāmagottaṃ,",
"ja545:146.4": "Jānanti maṃ nārado kassapo ca”.",
"ja545:147.1": "“Accherarūpaṃ tava yādisañca,",
"ja545:147.2": "Vehāyasaṃ gacchasi tiṭṭhasī ca;",
"ja545:147.3": "Pucchāmi taṃ nārada etamatthaṃ,",
"ja545:147.4": "Atha kena vaṇṇena tavāyamiddhi”.",
"ja545:148.1": "“Saccañca dhammo ca damo ca cāgo,",
"ja545:148.2": "Guṇā mamete pakatā purāṇā;",
"ja545:148.3": "Teheva dhammehi susevitehi,",
"ja545:148.4": "Manojavo yena kāmaṃ gatosmi”.",
"ja545:149.1": "“Accheramācikkhasi puññasiddhiṃ,",
"ja545:149.2": "Sace hi etehi yathā vadesi;",
"ja545:149.3": "Pucchāmi taṃ nārada etamatthaṃ,",
"ja545:149.4": "Puṭṭho ca me sādhu viyākarohi”.",
"ja545:150.1": "“Pucchassu maṃ rāja tavesa attho,",
"ja545:150.2": "Yaṃ saṃsayaṃ kuruse bhūmipāla;",
"ja545:150.3": "Ahaṃ taṃ nissaṃsayataṃ gamemi,",
"ja545:150.4": "Nayehi ñāyehi ca hetubhī ca”.",
"ja545:151.1": "“Pucchāmi taṃ nārada etamatthaṃ,",
"ja545:151.2": "Puṭṭho ca me nārada mā musā bhaṇi;",
"ja545:151.3": "Atthi nu devā pitaro nu atthi,",
"ja545:151.4": "Loko paro atthi jano yamāhu”.",
"ja545:152.1": "“Attheva devā pitaro ca atthi,",
"ja545:152.2": "Loko paro atthi jano yamāhu;",
"ja545:152.3": "Kāmesu giddhā ca narā pamūḷhā,",
"ja545:152.4": "Lokaṃ paraṃ na vidū mohayuttā”.",
"ja545:153.1": "“Atthīti ce nārada saddahāsi,",
"ja545:153.2": "Nivesanaṃ paraloke matānaṃ;",
"ja545:153.3": "Idheva me pañca satāni dehi,",
"ja545:153.4": "Dassāmi te paraloke sahassaṃ”.",
"ja545:154.1": "“Dajjemu kho pañca satāni bhoto,",
"ja545:154.2": "Jaññāmu ce sīlavantaṃ vadaññuṃ;",
"ja545:154.3": "Luddaṃ taṃ bhontaṃ niraye vasantaṃ,",
"ja545:154.4": "Ko codaye paraloke sahassaṃ.",
"ja545:155.1": "Idheva yo hoti adhammasīlo,",
"ja545:155.2": "Pāpācāro alaso luddakammo;",
"ja545:155.3": "Na paṇḍitā tasmiṃ iṇaṃ dadanti,",
"ja545:155.4": "Na hi āgamo hoti tathāvidhamhā.",
"ja545:156.1": "Dakkhañca posaṃ manujā viditvā,",
"ja545:156.2": "Uṭṭhānakaṃ sīlavantaṃ vadaññuṃ;",
"ja545:156.3": "Sayameva bhogehi nimantayanti,",
"ja545:156.4": "Kammaṃ karitvā puna māharesi.",
"ja545:157.1": "Ito cuto dakkhasi tattha rāja,",
"ja545:157.2": "Kākolasaṅghehi vikassamānaṃ;",
"ja545:157.3": "Taṃ khajjamānaṃ niraye vasantaṃ,",
"ja545:157.4": "Kākehi gijjhehi ca senakehi;",
"ja545:157.5": "Sañchinnagattaṃ ruhiraṃ savantaṃ,",
"ja545:157.6": "Ko codaye paraloke sahassaṃ.",
"ja545:158.1": "Andhaṃtamaṃ tattha na candasūriyā,",
"ja545:158.2": "Nirayo sadā tumulo ghorarūpo;",
"ja545:158.3": "Sā neva rattī na divā paññāyati,",
"ja545:158.4": "Tathāvidhe ko vicare dhanatthiko.",
"ja545:159.1": "Sabalo ca sāmo ca duve suvānā,",
"ja545:159.2": "Pavaddhakāyā balino mahantā;",
"ja545:159.3": "Khādanti dantehi ayomayehi,",
"ja545:159.4": "Ito paṇunnaṃ paralokapattaṃ.",
"ja545:160.1": "Taṃ khajjamānaṃ niraye vasantaṃ,",
"ja545:160.2": "Luddehi vāḷehi aghammigehi ca;",
"ja545:160.3": "Sañchinnagattaṃ ruhiraṃ savantaṃ,",
"ja545:160.4": "Ko codaye paraloke sahassaṃ.",
"ja545:161.1": "Usūhi sattīhi ca sunisitāhi,",
"ja545:161.2": "Hananti vijjhanti ca paccamittā;",
"ja545:161.3": "Kāḷūpakāḷā nirayamhi ghore,",
"ja545:161.4": "Pubbe naraṃ dukkaṭakammakāriṃ.",
"ja545:162.1": "Taṃ haññamānaṃ niraye vajantaṃ,",
"ja545:162.2": "Kucchismiṃ passasmiṃ vipphālitūdaraṃ;",
"ja545:162.3": "Sañchinnagattaṃ ruhiraṃ savantaṃ,",
"ja545:162.4": "Ko codaye paraloke sahassaṃ.",
"ja545:163.1": "Sattī usū tomarabhiṇḍivālā,",
"ja545:163.2": "Vividhāvudhā vassanti tattha devā;",
"ja545:163.3": "Patanti aṅgāramivaccimanto,",
"ja545:163.4": "Silāsanī vassati luddakamme.",
"ja545:164.1": "Uṇho ca vāto nirayamhi dussaho,",
"ja545:164.2": "Na tamhi sukhaṃ labbhati ittarampi;",
"ja545:164.3": "Taṃ taṃ vidhāvantamalenamāturaṃ,",
"ja545:164.4": "Ko codaye paraloke sahassaṃ.",
"ja545:165.1": "Sandhāvamānampi rathesu yuttaṃ,",
"ja545:165.2": "Sajotibhūtaṃ pathaviṃ kamantaṃ;",
"ja545:165.3": "Patodalaṭṭhīhi sucodayantaṃ,",
"ja545:165.4": "Ko codaye paraloke sahassaṃ.",
"ja545:166.1": "Tamāruhantaṃ khurasañcitaṃ giriṃ,",
"ja545:166.2": "Vibhiṃsanaṃ pajjalitaṃ bhayānakaṃ;",
"ja545:166.3": "Sañchinnagattaṃ ruhiraṃ savantaṃ,",
"ja545:166.4": "Ko codaye paraloke sahassaṃ.",
"ja545:167.1": "Tamāruhantaṃ pabbatasannikāsaṃ,",
"ja545:167.2": "Aṅgārarāsiṃ jalitaṃ bhayānakaṃ;",
"ja545:167.3": "Sudaḍḍhagattaṃ kapaṇaṃ rudantaṃ,",
"ja545:167.4": "Ko codaye paraloke sahassaṃ.",
"ja545:168.1": "Abbhakūṭasamā uccā,",
"ja545:168.2": "kaṇṭakanicitā dumā;",
"ja545:168.3": "Ayomayehi tikkhehi,",
"ja545:168.4": "naralohitapāyibhi.",
"ja545:169.1": "Tamāruhanti nāriyo,",
"ja545:169.2": "narā ca paradāragū;",
"ja545:169.3": "Coditā sattihatthehi,",
"ja545:169.4": "yamaniddesakāribhi.",
"ja545:170.1": "Tamāruhantaṃ nirayaṃ,",
"ja545:170.2": "simbaliṃ ruhiramakkhitaṃ;",
"ja545:170.3": "Vidaḍḍhakāyaṃ vitacaṃ,",
"ja545:170.4": "āturaṃ gāḷhavedanaṃ.",
"ja545:171.1": "Passasantaṃ muhuṃ uṇhaṃ,",
"ja545:171.2": "pubbakammāparādhikaṃ;",
"ja545:171.3": "Dumagge vitacaṃ gattaṃ,",
"ja545:171.4": "ko taṃ yāceyya taṃ dhanaṃ.",
"ja545:172.1": "Abbhakūṭasamā uccā,",
"ja545:172.2": "asipattācitā dumā;",
"ja545:172.3": "Ayomayehi tikkhehi,",
"ja545:172.4": "naralohitapāyibhi.",
"ja545:173.1": "Tamāruhantaṃ asipattapādapaṃ,",
"ja545:173.2": "Asīhi tikkhehi ca chijjamānaṃ;",
"ja545:173.3": "Sañchinnagattaṃ ruhiraṃ savantaṃ,",
"ja545:173.4": "Ko codaye paraloke sahassaṃ.",
"ja545:174.1": "Tato nikkhantamattaṃ taṃ,",
"ja545:174.2": "asipattācitā dumā;",
"ja545:174.3": "Sampatitaṃ vetaraṇiṃ,",
"ja545:174.4": "ko taṃ yāceyya taṃ dhanaṃ.",
"ja545:175.1": "Kharā kharodakā tattā,",
"ja545:175.2": "duggā vetaraṇī nadī;",
"ja545:175.3": "Ayopokkharasañchannā,",
"ja545:175.4": "tikkhā pattehi sandati.",
"ja545:176.1": "Tattha sañchinnagattaṃ taṃ,",
"ja545:176.2": "vuyhantaṃ ruhiramakkhitaṃ;",
"ja545:176.3": "Vetaraññe anālambe,",
"ja545:176.4": "ko taṃ yāceyya taṃ dhanaṃ”.",
"ja545:177.1": "“Vedhāmi rukkho viya chijjamāno,",
"ja545:177.2": "Disaṃ na jānāmi pamūḷhasañño;",
"ja545:177.3": "Bhayānutappāmi mahā ca me bhayā,",
"ja545:177.4": "Sutvāna kathā tava bhāsitā ise.",
"ja545:178.1": "Āditte vārimajjhaṃva,",
"ja545:178.2": "dīpaṃvoghe mahaṇṇave;",
"ja545:178.3": "Andhakāreva pajjoto,",
"ja545:178.4": "tvaṃ nosi saraṇaṃ ise.",
"ja545:179.1": "Atthañca dhammaṃ anusāsa maṃ ise,",
"ja545:179.2": "Atītamaddhā aparādhitaṃ mayā;",
"ja545:179.3": "Ācikkha me nārada suddhimaggaṃ,",
"ja545:179.4": "Yathā ahaṃ no nirayaṃ pateyyaṃ”.",
"ja545:180.1": "“Yathā ahū dhataraṭṭho,",
"ja545:180.2": "Vessāmitto aṭṭhako yāmataggi;",
"ja545:180.3": "Usindaro cāpi sivī ca rājā,",
"ja545:180.4": "Paricārakā samaṇabrāhmaṇānaṃ.",
"ja545:181.1": "Ete caññe ca rājāno,",
"ja545:181.2": "ye saggavisayaṃ gatā;",
"ja545:181.3": "Adhammaṃ parivajjetvā,",
"ja545:181.4": "dhammaṃ cara mahīpati.",
"ja545:182.1": "Annahatthā ca te byamhe,",
"ja545:182.2": "ghosayantu pure tava;",
"ja545:182.3": "Ko chāto ko ca tasito,",
"ja545:182.4": "ko mālaṃ ko vilepanaṃ;",
"ja545:182.5": "Nānārattānaṃ vatthānaṃ,",
"ja545:182.6": "ko naggo paridahissati.",
"ja545:183.1": "Ko panthe chattamāneti,",
"ja545:183.2": "pādukā ca mudū subhā;",
"ja545:183.3": "Iti sāyañca pāto ca,",
"ja545:183.4": "ghosayantu pure tava.",
"ja545:184.1": "Jiṇṇaṃ posaṃ gavāssañca,",
"ja545:184.2": "māssu yuñja yathā pure;",
"ja545:184.3": "Parihārañca dajjāsi,",
"ja545:184.4": "adhikārakato balī.",
"ja545:185.1": "Kāyo te rathasaññāto,",
"ja545:185.2": "manosārathiko lahu;",
"ja545:185.3": "Avihiṃsāsāritakkho,",
"ja545:185.4": "saṃvibhāgapaṭicchado.",
"ja545:186.1": "Pādasaññamanemiyo,",
"ja545:186.2": "hatthasaññamapakkharo;",
"ja545:186.3": "Kucchisaññamanabbhanto,",
"ja545:186.4": "vācāsaññamakūjano.",
"ja545:187.1": "Saccavākyasamattaṅgo,",
"ja545:187.2": "apesuññasusaññato;",
"ja545:187.3": "Girāsakhilanelaṅgo,",
"ja545:187.4": "mitabhāṇisilesito.",
"ja545:188.1": "Saddhālobhasusaṅkhāro,",
"ja545:188.2": "nivātañjalikubbaro;",
"ja545:188.3": "Athaddhatānatīsāko,",
"ja545:188.4": "sīlasaṃvaranandhano.",
"ja545:189.1": "Akkodhanamanugghātī,",
"ja545:189.2": "dhammapaṇḍarachattako;",
"ja545:189.3": "Bāhusaccamapālambo,",
"ja545:189.4": "ṭhitacittamupādhiyo.",
"ja545:190.1": "Kālaññutācittasāro,",
"ja545:190.2": "vesārajjatidaṇḍako;",
"ja545:190.3": "Nivātavuttiyottako,",
"ja545:190.4": "anatimānayugo lahu.",
"ja545:191.1": "Alīnacittasanthāro,",
"ja545:191.2": "vuddhisevī rajohato;",
"ja545:191.3": "Sati patodo dhīrassa,",
"ja545:191.4": "dhiti yogo ca rasmiyo.",
"ja545:192.1": "Mano dantaṃ pathaṃ neti,",
"ja545:192.2": "samadantehi vāhibhi;",
"ja545:192.3": "Icchā lobho ca kummaggo,",
"ja545:192.4": "ujumaggo ca saṃyamo.",
"ja545:193.1": "Rūpe sadde rase gandhe,",
"ja545:193.2": "vāhanassa padhāvato;",
"ja545:193.3": "Paññā ākoṭanī rāja,",
"ja545:193.4": "tattha attāva sārathi.",
"ja545:194.1": "Sace etena yānena,",
"ja545:194.2": "samacariyā daḷhā dhiti;",
"ja545:194.3": "Sabbakāmaduho rāja,",
"ja545:194.4": "na jātu nirayaṃ vaje”.",
"ja545:195.1": "“Alāto devadattosi,",
"ja545:195.2": "sunāmo āsi bhaddaji;",
"ja545:195.3": "Vijayo sāriputtosi,",
"ja545:195.4": "moggallānosi bījako.",
"ja545:196.1": "Sunakkhatto licchaviputto,",
"ja545:196.2": "guṇo āsi acelako;",
"ja545:196.3": "Ānando sā rucā āsi,",
"ja545:196.4": "yā rājānaṃ pasādayi.",
"ja545:197.1": "Uruvelakassapo rājā,",
"ja545:197.2": "pāpadiṭṭhi tadā ahu;",
"ja545:197.3": "Mahābrahmā bodhisatto,",
"ja545:197.4": "evaṃ dhāretha jātakan”ti.",
"ja545:198.1": "Mahānāradakassapajātakaṃ aṭṭhamaṃ."
}