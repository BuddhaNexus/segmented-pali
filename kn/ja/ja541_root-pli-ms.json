{
"ja541:1.1": "Jātaka",
"ja541:2.1": "Mahānipāta",
"ja541:3.1": "Mūgapakkhavagga",
"ja541:4.1": "4 Nimijātaka",
"ja541:5.1": "Accheraṃ vata lokasmiṃ,",
"ja541:5.2": "uppajjanti vicakkhaṇā;",
"ja541:5.3": "Yadā ahu nimirājā,",
"ja541:5.4": "paṇḍito kusalatthiko.",
"ja541:6.1": "Rājā sabbavidehānaṃ,",
"ja541:6.2": "adā dānaṃ arindamo;",
"ja541:6.3": "Tassa taṃ dadato dānaṃ,",
"ja541:6.4": "saṅkappo udapajjatha;",
"ja541:6.5": "Dānaṃ vā brahmacariyaṃ vā,",
"ja541:6.6": "katamaṃ su mahapphalaṃ.",
"ja541:7.1": "Tassa saṅkappamaññāya,",
"ja541:7.2": "maghavā devakuñjaro;",
"ja541:7.3": "Sahassanetto pāturahu,",
"ja541:7.4": "vaṇṇena vihanaṃ tamaṃ.",
"ja541:8.1": "Salomahaṭṭho manujindo,",
"ja541:8.2": "vāsavaṃ avacā nimi;",
"ja541:8.3": "“Devatā nusi gandhabbo,",
"ja541:8.4": "adu sakko purindado.",
"ja541:9.1": "Na ca me tādiso vaṇṇo,",
"ja541:9.2": "diṭṭho vā yadi vā suto;",
"ja541:9.3": "Ācikkha me tvaṃ bhaddante,",
"ja541:9.4": "kathaṃ jānemu taṃ mayaṃ”.",
"ja541:10.1": "Salomahaṭṭhaṃ ñatvāna,",
"ja541:10.2": "vāsavo avacā nimiṃ;",
"ja541:10.3": "“Sakkohamasmi devindo,",
"ja541:10.4": "āgatosmi tavantike;",
"ja541:10.5": "Alomahaṭṭho manujinda,",
"ja541:10.6": "puccha pañhaṃ yamicchasi”.",
"ja541:11.1": "So ca tena katokāso,",
"ja541:11.2": "vāsavaṃ avacā nimi;",
"ja541:11.3": "“Pucchāmi taṃ mahārāja,",
"ja541:11.4": "sabbabhūtānamissara;",
"ja541:11.5": "Dānaṃ vā brahmacariyaṃ vā,",
"ja541:11.6": "katamaṃ su mahapphalaṃ”.",
"ja541:12.1": "So puṭṭho naradevena,",
"ja541:12.2": "vāsavo avacā nimiṃ;",
"ja541:12.3": "Vipākaṃ brahmacariyassa,",
"ja541:12.4": "jānaṃ akkhāsijānato.",
"ja541:13.1": "“Hīnena brahmacariyena,",
"ja541:13.2": "khattiye upapajjati;",
"ja541:13.3": "Majjhimena ca devattaṃ,",
"ja541:13.4": "uttamena visujjhati.",
"ja541:14.1": "Na hete sulabhā kāyā,",
"ja541:14.2": "yācayogena kenaci;",
"ja541:14.3": "Ye kāye upapajjanti,",
"ja541:14.4": "anāgārā tapassino.",
"ja541:15.1": "Dudīpo sāgaro selo,",
"ja541:15.2": "mujakindo bhagīraso;",
"ja541:15.3": "Usindaro kassapo ca,",
"ja541:15.4": "asako ca puthujjano.",
"ja541:16.1": "Ete caññe ca rājāno,",
"ja541:16.2": "khattiyā brāhmaṇā bahū;",
"ja541:16.3": "Puthuyaññaṃ yajitvāna,",
"ja541:16.4": "petattaṃ nātivattisuṃ.",
"ja541:17.1": "()",
"ja541:18.1": "Atha yīme avattiṃsu,",
"ja541:18.2": "anāgārā tapassino;",
"ja541:18.3": "Sattisayo yāmahanu,",
"ja541:18.4": "somayāmo manojavo.",
"ja541:19.1": "Samuddo māgho bharato ca,",
"ja541:19.2": "isi kālapurakkhato;",
"ja541:19.3": "Aṅgīraso kassapo ca,",
"ja541:19.4": "kisavaccho akatti ca.",
"ja541:20.1": "Uttarena nadī sīdā,",
"ja541:20.2": "gambhīrā duratikkamā;",
"ja541:20.3": "Naḷaggivaṇṇā jotanti,",
"ja541:20.4": "sadā kañcanapabbatā.",
"ja541:21.1": "Parūḷhakacchā tagarā,",
"ja541:21.2": "rūḷhakacchā vanā nagā;",
"ja541:21.3": "Tatrāsuṃ dasasahassā,",
"ja541:21.4": "porāṇā isayo pure.",
"ja541:22.1": "Ahaṃ seṭṭhosmi dānena,",
"ja541:22.2": "saṃyamena damena ca;",
"ja541:22.3": "Anuttaraṃ vataṃ katvā,",
"ja541:22.4": "pakiracārī samāhite.",
"ja541:23.1": "Jātimantaṃ ajaccañca,",
"ja541:23.2": "ahaṃ ujugataṃ naraṃ;",
"ja541:23.3": "Ativelaṃ namassissaṃ,",
"ja541:23.4": "kammabandhū hi māṇavā.",
"ja541:24.1": "Sabbe vaṇṇā adhammaṭṭhā,",
"ja541:24.2": "patanti nirayaṃ adho;",
"ja541:24.3": "Sabbe vaṇṇā visujjhanti,",
"ja541:24.4": "caritvā dhammamuttamaṃ”.",
"ja541:25.1": "Idaṃ vatvāna maghavā,",
"ja541:25.2": "devarājā sujampati;",
"ja541:25.3": "Vedehamanusāsitvā,",
"ja541:25.4": "saggakāyaṃ apakkami.",
"ja541:26.1": "“Imaṃ bhonto nisāmetha,",
"ja541:26.2": "yāvantettha samāgatā;",
"ja541:26.3": "Dhammikānaṃ manussānaṃ,",
"ja541:26.4": "vaṇṇaṃ uccāvacaṃ bahuṃ.",
"ja541:27.1": "Yathā ayaṃ nimirājā,",
"ja541:27.2": "paṇḍito kusalatthiko;",
"ja541:27.3": "Rājā sabbavidehānaṃ,",
"ja541:27.4": "adā dānaṃ arindamo.",
"ja541:28.1": "Tassa taṃ dadato dānaṃ,",
"ja541:28.2": "saṅkappo udapajjatha;",
"ja541:28.3": "Dānaṃ vā brahmacariyaṃ vā,",
"ja541:28.4": "katamaṃ su mahapphalaṃ”.",
"ja541:29.1": "“Abbhuto vata lokasmiṃ,",
"ja541:29.2": "uppajji lomahaṃsano;",
"ja541:29.3": "Dibbo ratho pāturahu,",
"ja541:29.4": "vedehassa yasassino”.",
"ja541:30.1": "Devaputto mahiddhiko,",
"ja541:30.2": "mātali devasārathi;",
"ja541:30.3": "Nimantayittha rājānaṃ,",
"ja541:30.4": "vedehaṃ mithilaggahaṃ.",
"ja541:31.1": "“Ehimaṃ rathamāruyha,",
"ja541:31.2": "rājaseṭṭha disampati;",
"ja541:31.3": "Devā dassanakāmā te,",
"ja541:31.4": "tāvatiṃsā saindakā;",
"ja541:31.5": "Saramānā hi te devā,",
"ja541:31.6": "sudhammāyaṃ samacchare”.",
"ja541:32.1": "Tato rājā taramāno,",
"ja541:32.2": "vedeho mithilaggaho;",
"ja541:32.3": "Āsanā vuṭṭhahitvāna,",
"ja541:32.4": "pamukho rathamāruhi.",
"ja541:33.1": "Abhirūḷhaṃ rathaṃ dibbaṃ,",
"ja541:33.2": "mātali etadabravi;",
"ja541:33.3": "“Kena taṃ nemi maggena,",
"ja541:33.4": "rājaseṭṭha disampati;",
"ja541:33.5": "Yena vā pāpakammantā,",
"ja541:33.6": "puññakammā ca ye narā”.",
"ja541:34.1": "“Ubhayeneva maṃ nehi,",
"ja541:34.2": "mātali devasārathi;",
"ja541:34.3": "Yena vā pāpakammantā,",
"ja541:34.4": "puññakammā ca ye narā”.",
"ja541:35.1": "“Kena taṃ paṭhamaṃ nemi,",
"ja541:35.2": "rājaseṭṭha disampati;",
"ja541:35.3": "Yena vā pāpakammantā,",
"ja541:35.4": "puññakammā ca ye narā”.",
"ja541:36.1": "“Niraye tāva passāmi,",
"ja541:36.2": "āvāse pāpakamminaṃ;",
"ja541:36.3": "Ṭhānāni luddakammānaṃ,",
"ja541:36.4": "dussīlānañca yā gati”.",
"ja541:37.1": "Dassesi mātali rañño,",
"ja541:37.2": "duggaṃ vetaraṇiṃ nadiṃ;",
"ja541:37.3": "Kuthitaṃ khārasaṃyuttaṃ,",
"ja541:37.4": "tattaṃ aggisikhūpamaṃ.",
"ja541:38.1": "Nimī have mātalimajjhabhāsatha,",
"ja541:38.2": "Disvā janaṃ patamānaṃ vidugge;",
"ja541:38.3": "“Bhayañhi maṃ vindati sūta disvā,",
"ja541:38.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:38.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:38.6": "Yeme janā vetaraṇiṃ patanti”.",
"ja541:39.1": "Tassa puṭṭho viyākāsi,",
"ja541:39.2": "mātali devasārathi;",
"ja541:39.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:39.4": "jānaṃ akkhāsijānato.",
"ja541:40.1": "“Ye dubbale balavantā jīvaloke,",
"ja541:40.2": "Hiṃsanti rosanti supāpadhammā;",
"ja541:40.3": "Te luddakammā pasavetva pāpaṃ,",
"ja541:40.4": "Teme janā vetaraṇiṃ patanti”.",
"ja541:41.1": "“Sāmā ca soṇā sabalā ca gijjhā,",
"ja541:41.2": "Kākolasaṅghā adanti bheravā;",
"ja541:41.3": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:41.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:41.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:41.6": "Yeme jane kākolasaṅghā adanti”.",
"ja541:42.1": "Tassa puṭṭho viyākāsi,",
"ja541:42.2": "mātali devasārathi;",
"ja541:42.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:42.4": "jānaṃ akkhāsijānato.",
"ja541:43.1": "“Ye kecime maccharino kadariyā,",
"ja541:43.2": "Paribhāsakā samaṇabrāhmaṇānaṃ;",
"ja541:43.3": "Hiṃsanti rosanti supāpadhammā,",
"ja541:43.4": "Te luddakammā pasavetva pāpaṃ;",
"ja541:43.5": "Teme jane kākolasaṅghā adanti”.",
"ja541:44.1": "“Sajotibhūtā pathaviṃ kamanti,",
"ja541:44.2": "Tattehi khandhehi ca pothayanti;",
"ja541:44.3": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:44.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:44.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:44.6": "Yeme janā khandhahatā sayanti”.",
"ja541:45.1": "Tassa puṭṭho viyākāsi,",
"ja541:45.2": "mātali devasārathi;",
"ja541:45.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:45.4": "jānaṃ akkhāsijānato.",
"ja541:46.1": "“Ye jīvalokasmi supāpadhammino,",
"ja541:46.2": "Narañca nāriñca apāpadhammaṃ;",
"ja541:46.3": "Hiṃsanti rosanti supāpadhammā,",
"ja541:46.4": "Te luddakammā pasavetva pāpaṃ;",
"ja541:46.5": "Teme janā khandhahatā sayanti”.",
"ja541:47.1": "“Aṅgārakāsuṃ apare phuṇanti,",
"ja541:47.2": "Narā rudantā paridaḍḍhagattā;",
"ja541:47.3": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:47.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:47.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:47.6": "Yeme janā aṅgārakāsuṃ phuṇanti”.",
"ja541:48.1": "Tassa puṭṭho viyākāsi,",
"ja541:48.2": "mātali devasārathi;",
"ja541:48.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:48.4": "jānaṃ akkhāsijānato.",
"ja541:49.1": "“Ye keci pūgāya dhanassa hetu,",
"ja541:49.2": "Sakkhiṃ karitvā iṇaṃ jāpayanti;",
"ja541:49.3": "Te jāpayitvā janataṃ janinda,",
"ja541:49.4": "Te luddakammā pasavetva pāpaṃ;",
"ja541:49.5": "Teme janā aṅgārakāsuṃ phuṇanti”.",
"ja541:50.1": "“Sajotibhūtā jalitā padittā,",
"ja541:50.2": "Padissati mahatī lohakumbhī;",
"ja541:50.3": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:50.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:50.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:50.6": "Yeme janā avaṃsirā lohakumbhiṃ patanti”.",
"ja541:51.1": "Tassa puṭṭho viyākāsi,",
"ja541:51.2": "mātali devasārathi;",
"ja541:51.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:51.4": "jānaṃ akkhāsijānato.",
"ja541:52.1": "“Ye sīlavantaṃ samaṇaṃ brāhmaṇaṃ vā,",
"ja541:52.2": "Hiṃsanti rosanti supāpadhammā;",
"ja541:52.3": "Te luddakammā pasavetva pāpaṃ,",
"ja541:52.4": "Teme janā avaṃsirā lohakumbhiṃ patanti”.",
"ja541:53.1": "“Luñcanti gīvaṃ atha veṭhayitvā,",
"ja541:53.2": "Uṇhodakasmiṃ pakiledayitvā;",
"ja541:53.3": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:53.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:53.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:53.6": "Yeme janā luttasirā sayanti”.",
"ja541:54.1": "Tassa puṭṭho viyākāsi,",
"ja541:54.2": "mātali devasārathi;",
"ja541:54.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:54.4": "jānaṃ akkhāsijānato.",
"ja541:55.1": "“Ye jīvalokasmi supāpadhammino,",
"ja541:55.2": "Pakkhī gahetvāna viheṭhayanti te;",
"ja541:55.3": "Viheṭhayitvā sakuṇaṃ janinda,",
"ja541:55.4": "Te luddakammā pasavetva pāpaṃ;",
"ja541:55.5": "Teme janā luttasirā sayanti”.",
"ja541:56.1": "“Pahūtatoyā anigādhakūlā,",
"ja541:56.2": "Nadī ayaṃ sandati suppatitthā;",
"ja541:56.3": "Ghammābhitattā manujā pivanti,",
"ja541:56.4": "Pītañca tesaṃ bhusa hoti pāni.",
"ja541:57.1": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:57.2": "Pucchāmi taṃ mātali devasārathi;",
"ja541:57.3": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:57.4": "Pītañca tesaṃ bhusa hoti pāni”.",
"ja541:58.1": "Tassa puṭṭho viyākāsi,",
"ja541:58.2": "mātali devasārathi;",
"ja541:58.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:58.4": "jānaṃ akkhāsijānato.",
"ja541:59.1": "“Ye suddhadhaññaṃ palāsena missaṃ,",
"ja541:59.2": "Asuddhakammā kayino dadanti;",
"ja541:59.3": "Ghammābhitattāna pipāsitānaṃ,",
"ja541:59.4": "Pītañca tesaṃ bhusa hoti pāni”.",
"ja541:60.1": "“Usūhi sattīhi ca tomarehi,",
"ja541:60.2": "Dubhayāni passāni tudanti kandataṃ;",
"ja541:60.3": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:60.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:60.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:60.6": "Yeme janā sattihatā sayanti”.",
"ja541:61.1": "Tassa puṭṭho viyākāsi,",
"ja541:61.2": "mātali devasārathi;",
"ja541:61.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:61.4": "jānaṃ akkhāsijānato.",
"ja541:62.1": "“Ye jīvalokasmi asādhukammino,",
"ja541:62.2": "Adinnamādāya karonti jīvikaṃ;",
"ja541:62.3": "Dhaññaṃ dhanaṃ rajataṃ jātarūpaṃ,",
"ja541:62.4": "Ajeḷakañcāpi pasuṃ mahiṃsaṃ;",
"ja541:62.5": "Te luddakammā pasavetva pāpaṃ,",
"ja541:62.6": "Teme janā sattihatā sayanti”.",
"ja541:63.1": "“Gīvāya baddhā kissa ime puneke,",
"ja541:63.2": "Aññe vikantā bilakatā sayanti;",
"ja541:63.3": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:63.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:63.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:63.6": "Yeme janā bilakatā sayanti”.",
"ja541:64.1": "Tassa puṭṭho viyākāsi,",
"ja541:64.2": "mātali devasārathi;",
"ja541:64.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:64.4": "jānaṃ akkhāsijānato.",
"ja541:65.1": "“Orabbhikā sūkarikā ca macchikā,",
"ja541:65.2": "Pasuṃ mahiṃsañca ajeḷakañca;",
"ja541:65.3": "Hantvāna sūnesu pasārayiṃsu,",
"ja541:65.4": "Te luddakammā pasavetva pāpaṃ;",
"ja541:65.5": "Teme janā bilakatā sayanti”.",
"ja541:66.1": "“Rahado ayaṃ muttakarīsapūro,",
"ja541:66.2": "Duggandharūpo asuci pūti vāti;",
"ja541:66.3": "Khudāparetā manujā adanti,",
"ja541:66.4": "Bhayañhi maṃ vindati sūta disvā;",
"ja541:66.5": "Pucchāmi taṃ mātali devasārathi,",
"ja541:66.6": "Ime nu maccā kimakaṃsu pāpaṃ;",
"ja541:66.7": "Yeme janā muttakarīsabhakkhā”.",
"ja541:67.1": "Tassa puṭṭho viyākāsi,",
"ja541:67.2": "mātali devasārathi;",
"ja541:67.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:67.4": "jānaṃ akkhāsijānato.",
"ja541:68.1": "“Ye kecime kāraṇikā virosakā,",
"ja541:68.2": "Paresaṃ hiṃsāya sadā niviṭṭhā;",
"ja541:68.3": "Te luddakammā pasavetva pāpaṃ,",
"ja541:68.4": "Mittadduno mīḷhamadanti bālā”.",
"ja541:69.1": "“Rahado ayaṃ lohitapubbapūro,",
"ja541:69.2": "Duggandharūpo asuci pūti vāti;",
"ja541:69.3": "Ghammābhitattā manujā pivanti,",
"ja541:69.4": "Bhayañhi maṃ vindati sūta disvā;",
"ja541:69.5": "Pucchāmi taṃ mātali devasārathi,",
"ja541:69.6": "Ime nu maccā kimakaṃsu pāpaṃ;",
"ja541:69.7": "Yeme janā lohitapubbabhakkhā”.",
"ja541:70.1": "Tassa puṭṭho viyākāsi,",
"ja541:70.2": "mātali devasārathi;",
"ja541:70.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:70.4": "jānaṃ akkhāsijānato.",
"ja541:71.1": "“Ye mātaraṃ vā pitaraṃ vā jīvaloke,",
"ja541:71.2": "Pārājikā arahante hananti;",
"ja541:71.3": "Te luddakammā pasavetva pāpaṃ,",
"ja541:71.4": "Teme janā lohitapubbabhakkhā”.",
"ja541:72.1": "“Jivhañca passa baḷisena viddhaṃ,",
"ja541:72.2": "Vihataṃ yathā saṅkusatena cammaṃ;",
"ja541:72.3": "Phandanti macchāva thalamhi khittā,",
"ja541:72.4": "Muñcanti kheḷaṃ rudamānā kimete.",
"ja541:73.1": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:73.2": "Pucchāmi taṃ mātali devasārathi;",
"ja541:73.3": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:73.4": "Yeme janā vaṅkaghastā sayanti”.",
"ja541:74.1": "Tassa puṭṭho viyākāsi,",
"ja541:74.2": "mātali devasārathi;",
"ja541:74.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:74.4": "jānaṃ akkhāsijānato.",
"ja541:75.1": "“Ye keci sandhānagatā manussā,",
"ja541:75.2": "Agghena agghaṃ kayaṃ hāpayanti;",
"ja541:75.3": "Kuṭena kuṭaṃ dhanalobhahetu,",
"ja541:75.4": "Channaṃ yathā vāricaraṃ vadhāya.",
"ja541:76.1": "Na hi kuṭakārissa bhavanti tāṇā,",
"ja541:76.2": "Sakehi kammehi purakkhatassa;",
"ja541:76.3": "Te luddakammā pasavetva pāpaṃ,",
"ja541:76.4": "Teme janā vaṅkaghastā sayanti”.",
"ja541:77.1": "“Nārī imā samparibhinnagattā,",
"ja541:77.2": "Paggayha kandanti bhuje dujaccā;",
"ja541:77.3": "Sammakkhitā lohitapubbalittā,",
"ja541:77.4": "Gāvo yathā āghātane vikantā;",
"ja541:77.5": "Tā bhūmibhāgasmiṃ sadā nikhātā,",
"ja541:77.6": "Khandhātivattanti sajotibhūtā.",
"ja541:78.1": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:78.2": "Pucchāmi taṃ mātali devasārathi;",
"ja541:78.3": "Imā nu nāriyo kimakaṃsu pāpaṃ,",
"ja541:78.4": "Yā bhūmibhāgasmiṃ sadā nikhātā;",
"ja541:78.5": "Khandhātivattanti sajotibhūtā”.",
"ja541:79.1": "Tassa puṭṭho viyākāsi,",
"ja541:79.2": "mātali devasārathi;",
"ja541:79.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:79.4": "jānaṃ akkhāsijānato.",
"ja541:80.1": "“Kolitthiyāyo idha jīvaloke,",
"ja541:80.2": "Asuddhakammā asataṃ acāruṃ;",
"ja541:80.3": "Tā dittarūpā pati vippahāya,",
"ja541:80.4": "Aññaṃ acāruṃ ratikhiḍḍahetu;",
"ja541:80.5": "Tā jīvalokasmiṃ ramāpayitvā,",
"ja541:80.6": "Khandhātivattanti sajotibhūtā”.",
"ja541:81.1": "“Pāde gahetvā kissa ime puneke,",
"ja541:81.2": "Avaṃsirā narake pātayanti;",
"ja541:81.3": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:81.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:81.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:81.6": "Yeme janā avaṃsirā narake pātayanti”.",
"ja541:82.1": "Tassa puṭṭho viyākāsi,",
"ja541:82.2": "mātali devasārathi;",
"ja541:82.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:82.4": "jānaṃ akkhāsijānato.",
"ja541:83.1": "“Ye jīvalokasmi asādhukammino,",
"ja541:83.2": "Parassa dārāni atikkamanti;",
"ja541:83.3": "Te tādisā uttamabhaṇḍathenā,",
"ja541:83.4": "Teme janā avaṃsirā narake pātayanti.",
"ja541:84.1": "Te vassapūgāni bahūni tattha,",
"ja541:84.2": "Nirayesu dukkhaṃ vedanaṃ vedayanti;",
"ja541:84.3": "Na hi pāpakārissa bhavanti tāṇā,",
"ja541:84.4": "Sakehi kammehi purakkhatassa;",
"ja541:84.5": "Te luddakammā pasavetva pāpaṃ,",
"ja541:84.6": "Teme janā avaṃsirā narake pātayanti”.",
"ja541:85.1": "“Uccāvacāme vividhā upakkamā,",
"ja541:85.2": "Nirayesu dissanti sughorarūpā;",
"ja541:85.3": "Bhayañhi maṃ vindati sūta disvā,",
"ja541:85.4": "Pucchāmi taṃ mātali devasārathi;",
"ja541:85.5": "Ime nu maccā kimakaṃsu pāpaṃ,",
"ja541:85.6": "Yeme janā adhimattā dukkhā tibbā;",
"ja541:85.7": "Kharā kaṭukā vedanā vedayanti”.",
"ja541:86.1": "Tassa puṭṭho viyākāsi,",
"ja541:86.2": "mātali devasārathi;",
"ja541:86.3": "Vipākaṃ pāpakammānaṃ,",
"ja541:86.4": "jānaṃ akkhāsijānato.",
"ja541:87.1": "“Ye jīvalokasmi supāpadiṭṭhino,",
"ja541:87.2": "Vissāsakammāni karonti mohā;",
"ja541:87.3": "Parañca diṭṭhīsu samādapenti,",
"ja541:87.4": "Te pāpadiṭṭhiṃ pasavetva pāpaṃ;",
"ja541:87.5": "Teme janā adhimattā dukkhā tibbā,",
"ja541:87.6": "Kharā kaṭukā vedanā vedayanti”.",
"ja541:88.1": "“Viditāni te mahārāja,",
"ja541:88.2": "āvāsaṃ pāpakamminaṃ;",
"ja541:88.3": "Ṭhānāni luddakammānaṃ,",
"ja541:88.4": "dussīlānañca yā gati;",
"ja541:88.5": "Uyyāhi dāni rājīsi,",
"ja541:88.6": "devarājassa santike.",
"ja541:89.1": "()",
"ja541:90.1": "Pañcathūpaṃ dissatidaṃ vimānaṃ,",
"ja541:90.2": "Mālāpiḷandhā sayanassa majjhe;",
"ja541:90.3": "Tatthacchati nārī mahānubhāvā,",
"ja541:90.4": "Uccāvacaṃ iddhi vikubbamānā”.",
"ja541:91.1": "“Vittī hi maṃ vindati sūta disvā,",
"ja541:91.2": "Pucchāmi taṃ mātali devasārathi;",
"ja541:91.3": "Ayaṃ nu nārī kimakāsi sādhuṃ,",
"ja541:91.4": "Yā modati saggapattā vimāne”.",
"ja541:92.1": "Tassa puṭṭho viyākāsi,",
"ja541:92.2": "mātali devasārathi;",
"ja541:92.3": "Vipākaṃ puññakammānaṃ,",
"ja541:92.4": "jānaṃ akkhāsijānato.",
"ja541:93.1": "“Yadi te sutā bīraṇī jīvaloke,",
"ja541:93.2": "Āmāyadāsī ahu brāhmaṇassa;",
"ja541:93.3": "Sā pattakāle atithiṃ viditvā,",
"ja541:93.4": "Mātāva puttaṃ sakimābhinandī;",
"ja541:93.5": "Saṃyamā saṃvibhāgā ca,",
"ja541:93.6": "Sā vimānasmi modati.",
"ja541:94.1": "Daddallamānā ābhenti,",
"ja541:94.2": "vimānā satta nimmitā;",
"ja541:94.3": "Tattha yakkho mahiddhiko,",
"ja541:94.4": "sabbābharaṇabhūsito;",
"ja541:94.5": "Samantā anupariyāti,",
"ja541:94.6": "nārīgaṇapurakkhato”.",
"ja541:95.1": "“Vittī hi maṃ vindati sūta disvā,",
"ja541:95.2": "Pucchāmi taṃ mātali devasārathi;",
"ja541:95.3": "Ayaṃ nu macco kimakāsi sādhuṃ,",
"ja541:95.4": "Yo modati saggapatto vimāne”.",
"ja541:96.1": "Tassa puṭṭho viyākāsi,",
"ja541:96.2": "mātali devasārathi;",
"ja541:96.3": "Vipākaṃ puññakammānaṃ,",
"ja541:96.4": "jānaṃ akkhāsijānato.",
"ja541:97.1": "“Soṇadinno gahapati,",
"ja541:97.2": "esa dānapatī ahu;",
"ja541:97.3": "Esa pabbajituddissa,",
"ja541:97.4": "vihāre satta kārayi.",
"ja541:98.1": "Sakkaccaṃ te upaṭṭhāsi,",
"ja541:98.2": "bhikkhavo tattha vāsike;",
"ja541:98.3": "Acchādanañca bhattañca,",
"ja541:98.4": "senāsanaṃ padīpiyaṃ;",
"ja541:98.5": "Adāsi ujubhūtesu,",
"ja541:98.6": "vippasannena cetasā.",
"ja541:99.1": "Cātuddasiṃ pañcadasiṃ,",
"ja541:99.2": "Yā ca pakkhassa aṭṭhamī;",
"ja541:99.3": "Pāṭihāriyapakkhañca,",
"ja541:99.4": "Aṭṭhaṅgasusamāhitaṃ.",
"ja541:100.1": "Uposathaṃ upavasī,",
"ja541:100.2": "sadā sīlesu saṃvuto;",
"ja541:100.3": "Saṃyamā saṃvibhāgā ca,",
"ja541:100.4": "so vimānasmi modati.",
"ja541:101.1": "Pabhāsati midaṃ byamhaṃ,",
"ja541:101.2": "phalikāsu sunimmitaṃ;",
"ja541:101.3": "Nārīvaragaṇākiṇṇaṃ,",
"ja541:101.4": "kūṭāgāravarocitaṃ;",
"ja541:101.5": "Upetaṃ annapānehi,",
"ja541:101.6": "naccagītehi cūbhayaṃ”.",
"ja541:102.1": "“Vittī hi maṃ vindati sūta disvā,",
"ja541:102.2": "Pucchāmi taṃ mātali devasārathi;",
"ja541:102.3": "Ime nu maccā kimakaṃsu sādhuṃ,",
"ja541:102.4": "Ye modare saggapattā vimāne”.",
"ja541:103.1": "Tassa puṭṭho viyākāsi,",
"ja541:103.2": "mātali devasārathi;",
"ja541:103.3": "Vipākaṃ puññakammānaṃ,",
"ja541:103.4": "jānaṃ akkhāsijānato.",
"ja541:104.1": "“Yā kāci nāriyo idha jīvaloke,",
"ja541:104.2": "Sīlavantiyo upāsikā;",
"ja541:104.3": "Dāne ratā niccaṃ pasannacittā,",
"ja541:104.4": "Sacce ṭhitā uposathe appamattā;",
"ja541:104.5": "Saṃyamā saṃvibhāgā ca,",
"ja541:104.6": "Tā vimānasmi modare”.",
"ja541:105.1": "“Pabhāsati midaṃ byamhaṃ,",
"ja541:105.2": "veḷuriyāsu nimmitaṃ;",
"ja541:105.3": "Upetaṃ bhūmibhāgehi,",
"ja541:105.4": "vibhattaṃ bhāgaso mitaṃ.",
"ja541:106.1": "Āḷambarā mudiṅgā ca,",
"ja541:106.2": "naccagītā suvāditā;",
"ja541:106.3": "Dibbā saddā niccharanti,",
"ja541:106.4": "savanīyā manoramā.",
"ja541:107.1": "Nāhaṃ evaṃgataṃ jātu,",
"ja541:107.2": "evaṃsuruciraṃ pure;",
"ja541:107.3": "Saddaṃ samabhijānāmi,",
"ja541:107.4": "diṭṭhaṃ vā yadi vā sutaṃ.",
"ja541:108.1": "Vittī hi maṃ vindati sūta disvā,",
"ja541:108.2": "Pucchāmi taṃ mātali devasārathi;",
"ja541:108.3": "Ime nu maccā kimakaṃsu sādhuṃ,",
"ja541:108.4": "Ye modare saggapattā vimāne”.",
"ja541:109.1": "Tassa puṭṭho viyākāsi,",
"ja541:109.2": "mātali devasārathi;",
"ja541:109.3": "Vipākaṃ puññakammānaṃ,",
"ja541:109.4": "jānaṃ akkhāsijānato.",
"ja541:110.1": "“Ye keci maccā idha jīvaloke,",
"ja541:110.2": "Sīlavantā upāsakā;",
"ja541:110.3": "Ārāme udapāne ca,",
"ja541:110.4": "Papā saṅkamanāni ca;",
"ja541:110.5": "Arahante sītibhūte,",
"ja541:110.6": "Sakkaccaṃ paṭipādayuṃ.",
"ja541:111.1": "Cīvaraṃ piṇḍapātañca,",
"ja541:111.2": "paccayaṃ sayanāsanaṃ;",
"ja541:111.3": "Adaṃsu ujubhūtesu,",
"ja541:111.4": "vippasannena cetasā.",
