{
"ja424:1.1": "Jātaka",
"ja424:2.1": "Aṭṭhakanipāta",
"ja424:3.1": "Kaccānivagga",
"ja424:4.1": "8. Ādittajātaka",
"ja424:5.1": "“Ādittasmiṃ agārasmiṃ,",
"ja424:5.2": "yaṃ nīharati bhājanaṃ;",
"ja424:5.3": "Taṃ tassa hoti atthāya,",
"ja424:5.4": "no ca yaṃ tattha ḍayhati.",
"ja424:6.1": "Evamādīpito loko,",
"ja424:6.2": "jarāya maraṇena ca;",
"ja424:6.3": "Nīharetheva dānena,",
"ja424:6.4": "dinnaṃ hoti sunīhataṃ”.",
"ja424:7.1": "“Yo dhammaladdhassa dadāti dānaṃ,",
"ja424:7.2": "Uṭṭhānaviriyādhigatassa jantu;",
"ja424:7.3": "Atikkamma so vetaraṇiṃ yamassa,",
"ja424:7.4": "Dibbāni ṭhānāni upeti macco.",
"ja424:8.1": "Dānañca yuddhañca samānamāhu,",
"ja424:8.2": "Appāpi santā bahuke jinanti;",
"ja424:8.3": "Appampi ce saddahāno dadāti,",
"ja424:8.4": "Teneva so hoti sukhī parattha.",
"ja424:9.1": "Viceyya dānaṃ sugatappasatthaṃ,",
"ja424:9.2": "Ye dakkhiṇeyyā idha jīvaloke;",
"ja424:9.3": "Etesu dinnāni mahapphalāni,",
"ja424:9.4": "Bījāni vuttāni yathā sukhette.",
"ja424:10.1": "Yo pāṇabhūtāni aheṭhayaṃ caraṃ,",
"ja424:10.2": "Parūpavādā na karoti pāpaṃ;",
"ja424:10.3": "Bhīruṃ pasaṃsanti na tattha sūraṃ,",
"ja424:10.4": "Bhayā hi santo na karonti pāpaṃ.",
"ja424:11.1": "Hīnena brahmacariyena,",
"ja424:11.2": "khattiye upapajjati;",
"ja424:11.3": "Majjhimena ca devattaṃ,",
"ja424:11.4": "uttamena visujjhati.",
"ja424:12.1": "Addhā hi dānaṃ bahudhā pasatthaṃ,",
"ja424:12.2": "Dānā ca kho dhammapadaṃva seyyo;",
"ja424:12.3": "Pubbeva hi pubbatareva santo,",
"ja424:12.4": "Nibbānamevajjhagamuṃ sapaññā”ti.",
"ja424:13.1": "Ādittajātakaṃ aṭṭhamaṃ."
}