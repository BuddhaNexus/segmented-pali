{
"ja407:1.1": "Jātaka",
"ja407:2.1": "Sattakanipāta",
"ja407:3.1": "Gandhāravagga",
"ja407:4.1": "2. Mahākapijātaka",
"ja407:5.1": "“Attānaṃ saṅkamaṃ katvā,",
"ja407:5.2": "Yo sotthiṃ samatārayi;",
"ja407:5.3": "Kiṃ tvaṃ tesaṃ kime tuyhaṃ,",
"ja407:5.4": "Honti ete mahākapi”.",
"ja407:6.1": "“Rājāhaṃ issaro tesaṃ,",
"ja407:6.2": "yūthassa parihārako;",
"ja407:6.3": "Tesaṃ sokaparetānaṃ,",
"ja407:6.4": "bhītānaṃ te arindama.",
"ja407:7.1": "Ullaṅghayitvā attānaṃ,",
"ja407:7.2": "vissaṭṭhadhanuno sataṃ;",
"ja407:7.3": "Tato aparapādesu,",
"ja407:7.4": "daḷhaṃ bandhaṃ latāguṇaṃ.",
"ja407:8.1": "Chinnabbhamiva vātena,",
"ja407:8.2": "Nuṇṇo rukkhaṃ upāgamiṃ;",
"ja407:8.3": "Sohaṃ appabhavaṃ tattha,",
"ja407:8.4": "Sākhaṃ hatthehi aggahiṃ.",
"ja407:9.1": "Taṃ maṃ viyāyataṃ santaṃ,",
"ja407:9.2": "sākhāya ca latāya ca;",
"ja407:9.3": "Samanukkamantā pādehi,",
"ja407:9.4": "sotthiṃ sākhāmigā gatā.",
"ja407:10.1": "Taṃ maṃ na tapate bandho,",
"ja407:10.2": "mato me na tapessati;",
"ja407:10.3": "Sukhamāharitaṃ tesaṃ,",
"ja407:10.4": "yesaṃ rajjamakārayiṃ.",
"ja407:11.1": "Esā te upamā rāja,",
"ja407:11.2": "taṃ suṇohi arindama;",
"ja407:11.3": "Raññā raṭṭhassa yoggassa,",
"ja407:11.4": "balassa nigamassa ca;",
"ja407:11.5": "Sabbesaṃ sukhameṭṭhabbaṃ,",
"ja407:11.6": "khattiyena pajānatā”ti.",
"ja407:12.1": "Mahākapijātakaṃ dutiyaṃ."
}