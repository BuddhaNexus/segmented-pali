{
"ja521:1.1": "Jātaka",
"ja521:2.1": "Cattālīsanipāta",
"ja521:3.1": "Tesakuṇavagga",
"ja521:4.1": "1. Tesakuṇajātaka",
"ja521:5.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
"ja521:6.1": "“Vessantaraṃ taṃ pucchāmi,",
"ja521:6.2": "sakuṇa bhaddamatthu te;",
"ja521:6.3": "Rajjaṃ kāretukāmena,",
"ja521:6.4": "kiṃ su kiccaṃ kataṃ varaṃ”.",
"ja521:7.1": "“Cirassaṃ vata maṃ tāto,",
"ja521:7.2": "kaṃso bārāṇasiggaho;",
"ja521:7.3": "Pamatto appamattaṃ maṃ,",
"ja521:7.4": "pitā puttaṃ acodayi.",
"ja521:8.1": "Paṭhameneva vitathaṃ,",
"ja521:8.2": "kodhaṃ hāsaṃ nivāraye;",
"ja521:8.3": "Tato kiccāni kāreyya,",
"ja521:8.4": "taṃ vataṃ āhu khattiya.",
"ja521:9.1": "Yaṃ tvaṃ tāta tapokammaṃ,",
"ja521:9.2": "Pubbe katamasaṃsayaṃ;",
"ja521:9.3": "Ratto duṭṭho ca yaṃ kayirā,",
"ja521:9.4": "Na taṃ kayirā tato puna.",
"ja521:10.1": "Khattiyassa pamattassa,",
"ja521:10.2": "raṭṭhasmiṃ raṭṭhavaḍḍhana;",
"ja521:10.3": "Sabbe bhogā vinassanti,",
"ja521:10.4": "rañño taṃ vuccate aghaṃ.",
"ja521:11.1": "Sirī tāta alakkhī ca,",
"ja521:11.2": "pucchitā etadabravuṃ;",
"ja521:11.3": "Uṭṭhānavīriye pose,",
"ja521:11.4": "ramāhaṃ anusūyake.",
"ja521:12.1": "Usūyake duhadaye,",
"ja521:12.2": "purise kammadussake;",
"ja521:12.3": "Kāḷakaṇṇī mahārāja,",
"ja521:12.4": "ramati cakkabhañjanī.",
"ja521:13.1": "So tvaṃ sabbesu suhadayo,",
"ja521:13.2": "sabbesaṃ rakkhito bhava;",
"ja521:13.3": "Alakkhiṃ nuda mahārāja,",
"ja521:13.4": "lakkhyā bhava nivesanaṃ.",
"ja521:14.1": "Sa lakkhīdhitisampanno,",
"ja521:14.2": "puriso hi mahaggato;",
"ja521:14.3": "Amittānaṃ kāsipati,",
"ja521:14.4": "mūlaṃ aggañca chindati.",
"ja521:15.1": "Sakkopi hi bhūtapati,",
"ja521:15.2": "uṭṭhāne nappamajjati;",
"ja521:15.3": "Sa kalyāṇe dhitiṃ katvā,",
"ja521:15.4": "uṭṭhāne kurute mano.",
"ja521:16.1": "Gandhabbā pitaro devā,",
"ja521:16.2": "sājīvā honti tādino;",
"ja521:16.3": "Uṭṭhāhato appamajjato,",
"ja521:16.4": "anutiṭṭhanti devatā.",
"ja521:17.1": "So appamatto akkuddho,",
"ja521:17.2": "tāta kiccāni kāraya;",
"ja521:17.3": "Vāyamassu ca kiccesu,",
"ja521:17.4": "nālaso vindate sukhaṃ.",
"ja521:18.1": "Tattheva te vattapadā,",
"ja521:18.2": "esāva anusāsanī;",
"ja521:18.3": "Alaṃ mitte sukhāpetuṃ,",
"ja521:18.4": "amittānaṃ dukhāya ca”.",
"ja521:19.1": "“Sakkhisi tvaṃ kuṇḍalini,",
"ja521:19.2": "maññasi khattabandhuni;",
"ja521:19.3": "Rajjaṃ kāretukāmena,",
"ja521:19.4": "kiṃ su kiccaṃ kataṃ varaṃ”.",
"ja521:20.1": "“Dveva tāta padakāni,",
"ja521:20.2": "yattha sabbaṃ patiṭṭhitaṃ;",
"ja521:20.3": "Aladdhassa ca yo lābho,",
"ja521:20.4": "laddhassa cānurakkhaṇā.",
"ja521:21.1": "Amacce tāta jānāhi,",
"ja521:21.2": "dhīre atthassa kovide;",
"ja521:21.3": "Anakkhākitave tāta,",
"ja521:21.4": "asoṇḍe avināsake.",
"ja521:22.1": "Yo ca taṃ tāta rakkheyya,",
"ja521:22.2": "dhanaṃ yañceva te siyā;",
"ja521:22.3": "Sūtova rathaṃ saṅgaṇhe,",
"ja521:22.4": "so te kiccāni kāraye.",
"ja521:23.1": "Susaṅgahitantajano,",
"ja521:23.2": "sayaṃ vittaṃ avekkhiya;",
"ja521:23.3": "Nidhiñca iṇadānañca,",
"ja521:23.4": "na kare parapattiyā.",
"ja521:24.1": "Sayaṃ āyaṃ vayaṃ jaññā,",
"ja521:24.2": "sayaṃ jaññā katākataṃ;",
"ja521:24.3": "Niggaṇhe niggahārahaṃ,",
"ja521:24.4": "paggaṇhe paggahārahaṃ.",
"ja521:25.1": "Sayaṃ jānapadaṃ atthaṃ,",
"ja521:25.2": "anusāsa rathesabha;",
"ja521:25.3": "Mā te adhammikā yuttā,",
"ja521:25.4": "dhanaṃ raṭṭhañca nāsayuṃ.",
"ja521:26.1": "Mā ca vegena kiccāni,",
"ja521:26.2": "karosi kārayesi vā;",
"ja521:26.3": "Vegasā hi kataṃ kammaṃ,",
"ja521:26.4": "mando pacchānutappati.",
"ja521:27.1": "Mā te adhisare muñca,",
"ja521:27.2": "subāḷhamadhikopitaṃ;",
"ja521:27.3": "Kodhasā hi bahū phītā,",
"ja521:27.4": "kulā akulataṃ gatā.",
"ja521:28.1": "Mā tāta issaromhīti,",
"ja521:28.2": "anatthāya patārayi;",
"ja521:28.3": "Itthīnaṃ purisānañca,",
"ja521:28.4": "mā te āsi dukhudrayo.",
"ja521:29.1": "Apetalomahaṃsassa,",
"ja521:29.2": "rañño kāmānusārino;",
"ja521:29.3": "Sabbe bhogā vinassanti,",
"ja521:29.4": "rañño taṃ vuccate aghaṃ.",
"ja521:30.1": "Tattheva te vattapadā,",
"ja521:30.2": "esāva anusāsanī;",
"ja521:30.3": "Dakkhassudāni puññakaro,",
"ja521:30.4": "asoṇḍo avināsako;",
"ja521:30.5": "Sīlavāssu mahārāja,",
"ja521:30.6": "dussīlo vinipātiko”.",
"ja521:31.1": "“Apucchimha kosiyagottaṃ,",
"ja521:31.2": "kuṇḍaliniṃ tatheva ca;",
"ja521:31.3": "Tvaṃ dāni vadehi jambuka,",
"ja521:31.4": "balānaṃ balamuttamaṃ”.",
"ja521:32.1": "“Balaṃ pañcavidhaṃ loke,",
"ja521:32.2": "purisasmiṃ mahaggate;",
"ja521:32.3": "Tattha bāhubalaṃ nāma,",
"ja521:32.4": "carimaṃ vuccate balaṃ.",
"ja521:33.1": "Bhogabalañca dīghāvu,",
"ja521:33.2": "dutiyaṃ vuccate balaṃ;",
"ja521:33.3": "Amaccabalañca dīghāvu,",
"ja521:33.4": "tatiyaṃ vuccate balaṃ.",
"ja521:34.1": "Abhijaccabalaṃ ceva,",
"ja521:34.2": "taṃ catutthaṃ asaṃsayaṃ;",
"ja521:34.3": "Yāni cetāni sabbāni,",
"ja521:34.4": "adhigaṇhāti paṇḍito.",
"ja521:35.1": "Taṃ balānaṃ balaṃ seṭṭhaṃ,",
"ja521:35.2": "aggaṃ paññābalaṃ balaṃ;",
"ja521:35.3": "Paññābalenupatthaddho,",
"ja521:35.4": "atthaṃ vindati paṇḍito.",
"ja521:36.1": "Api ce labhati mando,",
"ja521:36.2": "phītaṃ dharaṇimuttamaṃ;",
"ja521:36.3": "Akāmassa pasayhaṃ vā,",
"ja521:36.4": "añño taṃ paṭipajjati.",
"ja521:37.1": "Abhijātopi ce hoti,",
"ja521:37.2": "rajjaṃ laddhāna khattiyo;",
"ja521:37.3": "Duppañño hi kāsipati,",
"ja521:37.4": "sabbenapi na jīvati.",
"ja521:38.1": "Paññāva sutaṃ vinicchinī,",
"ja521:38.2": "Paññā kitti silokavaḍḍhanī;",
"ja521:38.3": "Paññāsahito naro idha,",
"ja521:38.4": "Api dukkhe sukhāni vindati.",
"ja521:39.1": "Paññañca kho asussūsaṃ,",
"ja521:39.2": "na koci adhigacchati;",
"ja521:39.3": "Bahussutaṃ anāgamma,",
"ja521:39.4": "dhammaṭṭhaṃ avinibbhujaṃ.",
"ja521:40.1": "Yo ca dhammavibhaṅgaññū,",
"ja521:40.2": "kāluṭṭhāyī matandito;",
"ja521:40.3": "Anuṭṭhahati kālena,",
"ja521:40.4": "kammaphalaṃ tassijjhati.",
"ja521:41.1": "Anāyatanasīlassa,",
"ja521:41.2": "anāyatanasevino;",
"ja521:41.3": "Na nibbindiyakārissa,",
"ja521:41.4": "sammadattho vipaccati.",
"ja521:42.1": "Ajjhattañca payuttassa,",
"ja521:42.2": "tathāyatanasevino;",
"ja521:42.3": "Anibbindiyakārissa,",
"ja521:42.4": "sammadattho vipaccati.",
"ja521:43.1": "Yogappayogasaṅkhātaṃ,",
"ja521:43.2": "sambhatassānurakkhaṇaṃ;",
"ja521:43.3": "Tāni tvaṃ tāta sevassu,",
"ja521:43.4": "mā akammāya randhayi;",
"ja521:43.5": "Akammunā hi dummedho,",
"ja521:43.6": "naḷāgāraṃva sīdati”.",
"ja521:44.1": "“Dhammaṃ cara mahārāja,",
"ja521:44.2": "mātāpitūsu khattiya;",
"ja521:44.3": "Idha dhammaṃ caritvāna,",
"ja521:44.4": "rāja saggaṃ gamissasi.",
"ja521:45.1": "Dhammaṃ cara mahārāja,",
"ja521:45.2": "puttadāresu khattiya;",
"ja521:45.3": "Idha dhammaṃ caritvāna,",
"ja521:45.4": "rāja saggaṃ gamissasi.",
"ja521:46.1": "Dhammaṃ cara mahārāja,",
"ja521:46.2": "mittāmaccesu khattiya;",
"ja521:46.3": "Idha dhammaṃ caritvāna,",
"ja521:46.4": "rāja saggaṃ gamissasi.",
"ja521:47.1": "Dhammaṃ cara mahārāja,",
"ja521:47.2": "vāhanesu balesu ca;",
"ja521:47.3": "Idha dhammaṃ caritvāna,",
"ja521:47.4": "rāja saggaṃ gamissasi.",
"ja521:48.1": "Dhammaṃ cara mahārāja,",
"ja521:48.2": "gāmesu nigamesu ca; … pe …",
"ja521:49.1": "Dhammaṃ cara mahārāja,",
"ja521:49.2": "raṭṭhesu janapadesu ca; … pe …",
"ja521:50.1": "Dhammaṃ cara mahārāja,",
"ja521:50.2": "samaṇabrāhmaṇesu ca; … pe …",
"ja521:51.1": "Dhammaṃ cara mahārāja,",
"ja521:51.2": "migapakkhīsu khattiya;",
"ja521:51.3": "Idha dhammaṃ caritvāna,",
"ja521:51.4": "rāja saggaṃ gamissasi.",
"ja521:52.1": "Dhammaṃ cara mahārāja,",
"ja521:52.2": "dhammo ciṇṇo sukhāvaho;",
"ja521:52.3": "Idha dhammaṃ caritvāna,",
"ja521:52.4": "rāja saggaṃ gamissasi.",
"ja521:53.1": "Dhammaṃ cara mahārāja,",
"ja521:53.2": "Saindā devā sabrahmakā;",
"ja521:53.3": "Suciṇṇena divaṃ pattā,",
"ja521:53.4": "Mā dhammaṃ rāja pāmado.",
"ja521:54.1": "Tattheva te vattapadā,",
"ja521:54.2": "Esāva anusāsanī;",
"ja521:54.3": "Sappaññasevī kalyāṇī,",
"ja521:54.4": "Samattaṃ sāma taṃ vidū”ti.",
"ja521:55.1": "Tesakuṇajātakaṃ paṭhamaṃ."
}