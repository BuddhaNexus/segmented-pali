{
"ja473:1.1": "Jātaka",
"ja473:2.1": "Dvādasakanipāta",
"ja473:3.1": "Cūḷakuṇālavagga",
"ja473:4.1": "10. Mittāmittajātaka",
"ja473:5.1": "“Kāni kammāni kubbānaṃ,",
"ja473:5.2": "kathaṃ viññū parakkame;",
"ja473:5.3": "Amittaṃ jāneyya medhāvī,",
"ja473:5.4": "disvā sutvā ca paṇḍito”.",
"ja473:6.1": "“Na naṃ umhayate disvā,",
"ja473:6.2": "na ca naṃ paṭinandati;",
"ja473:6.3": "Cakkhūni cassa na dadāti,",
"ja473:6.4": "paṭilomañca vattati.",
"ja473:7.1": "Amitte tassa bhajati,",
"ja473:7.2": "mitte tassa na sevati;",
"ja473:7.3": "Vaṇṇakāme nivāreti,",
"ja473:7.4": "akkosante pasaṃsati.",
"ja473:8.1": "Guyhañca tassa nakkhāti,",
"ja473:8.2": "tassa guyhaṃ na gūhati;",
"ja473:8.3": "Kammaṃ tassa na vaṇṇeti,",
"ja473:8.4": "paññassa nappasaṃsati.",
"ja473:9.1": "Abhave nandati tassa,",
"ja473:9.2": "bhave tassa na nandati;",
"ja473:9.3": "Accheraṃ bhojanaṃ laddhā,",
"ja473:9.4": "tassa nuppajjate sati;",
"ja473:9.5": "Tato naṃ nānukampati,",
"ja473:9.6": "aho sopi labheyyito.",
"ja473:10.1": "Iccete soḷasākārā,",
"ja473:10.2": "amittasmiṃ patiṭṭhitā;",
"ja473:10.3": "Yehi amittaṃ jāneyya,",
"ja473:10.4": "disvā sutvā ca paṇḍito”.",
"ja473:11.1": "“Kāni kammāni kubbānaṃ,",
"ja473:11.2": "kathaṃ viññū parakkame;",
"ja473:11.3": "Mittaṃ jāneyya medhāvī,",
"ja473:11.4": "disvā sutvā ca paṇḍito.",
"ja473:12.1": "Pavutthaṃ tassa sarati,",
"ja473:12.2": "āgataṃ abhinandati;",
"ja473:12.3": "Tato kelāyito hoti,",
"ja473:12.4": "vācāya paṭinandati.",
"ja473:13.1": "Mitte tasseva bhajati,",
"ja473:13.2": "amitte tassa na sevati;",
"ja473:13.3": "Akkosante nivāreti,",
"ja473:13.4": "vaṇṇakāme pasaṃsati.",
"ja473:14.1": "Guyhañca tassa akkhāti,",
"ja473:14.2": "tassa guyhañca gūhati;",
"ja473:14.3": "Kammañca tassa vaṇṇeti,",
"ja473:14.4": "paññaṃ tassa pasaṃsati.",
"ja473:15.1": "Bhave ca nandati tassa,",
"ja473:15.2": "abhave tassa na nandati;",
"ja473:15.3": "Accheraṃ bhojanaṃ laddhā,",
"ja473:15.4": "tassa uppajjate sati;",
"ja473:15.5": "Tato naṃ anukampati,",
"ja473:15.6": "aho sopi labheyyito.",
"ja473:16.1": "Iccete soḷasākārā,",
"ja473:16.2": "Mittasmiṃ suppatiṭṭhitā;",
"ja473:16.3": "Yehi mittañca jāneyya,",
"ja473:16.4": "Disvā sutvā ca paṇḍito”ti. #1779",
"ja473:17.1": "Mittāmittajātakaṃ dasamaṃ.",
"ja473:18.1": "Dvādasakanipātaṃ niṭṭhitaṃ.",
"ja473:19.1": "Tassuddānaṃ",
"ja473:20.1": "Lahucitta sasāla kasanti puna,",
"ja473:20.2": "Atha kāma dasakhaluṭṭhānavaro;",
"ja473:20.3": "Atha kaṇha sukosiya meṇḍavaro,",
"ja473:20.4": "Padumo puna mittavarena dasāti."
}