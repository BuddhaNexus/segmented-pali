{
"ja540:1.1": "Jātaka",
"ja540:2.1": "Mahānipāta",
"ja540:3.1": "Mūgapakkhavagga",
"ja540:4.1": "3 Suvaṇṇasāmajātaka",
"ja540:5.1": "“Ko nu maṃ usunā vijjhi,",
"ja540:5.2": "pamattaṃ udahārakaṃ;",
"ja540:5.3": "Khattiyo brāhmaṇo vesso,",
"ja540:5.4": "ko maṃ viddhā nilīyasi.",
"ja540:6.1": "Na me maṃsāni khajjāni,",
"ja540:6.2": "Cammenattho na vijjati;",
"ja540:6.3": "Atha kena nu vaṇṇena,",
"ja540:6.4": "Viddheyyaṃ maṃ amaññatha.",
"ja540:7.1": "Ko vā tvaṃ kassa vā putto,",
"ja540:7.2": "kathaṃ jānemu taṃ mayaṃ;",
"ja540:7.3": "Puṭṭho me samma akkhāhi,",
"ja540:7.4": "kiṃ maṃ viddhā nilīyasi”.",
"ja540:8.1": "“Rājāhamasmi kāsīnaṃ,",
"ja540:8.2": "pīḷiyakkhoti maṃ vidū;",
"ja540:8.3": "Lobhā raṭṭhaṃ pahitvāna,",
"ja540:8.4": "migamesaṃ carāmahaṃ.",
"ja540:9.1": "Issatthe casmi kusalo,",
"ja540:9.2": "daḷhadhammoti vissuto;",
"ja540:9.3": "Nāgopi me na mucceyya,",
"ja540:9.4": "āgato usupātanaṃ.",
"ja540:10.1": "Ko vā tvaṃ kassa vā putto,",
"ja540:10.2": "kathaṃ jānemu taṃ mayaṃ;",
"ja540:10.3": "Pituno attano cāpi,",
"ja540:10.4": "nāmagottaṃ pavedaya”.",
"ja540:11.1": "“Nesādaputto bhaddante,",
"ja540:11.2": "sāmo iti maṃ ñātayo;",
"ja540:11.3": "Āmantayiṃsu jīvantaṃ,",
"ja540:11.4": "svajjevāhaṃ gato saye.",
"ja540:12.1": "Viddhosmi puthusallena,",
"ja540:12.2": "savisena yathā migo;",
"ja540:12.3": "Sakamhi lohite rāja,",
"ja540:12.4": "passa semi paripluto.",
"ja540:13.1": "Paṭivāmagataṃ sallaṃ,",
"ja540:13.2": "passa dhimhāmi lohitaṃ;",
"ja540:13.3": "Āturo tyānupucchāmi,",
"ja540:13.4": "kiṃ maṃ viddhā nilīyasi.",
"ja540:14.1": "Ajinamhi haññate dīpi,",
"ja540:14.2": "nāgo dantehi haññate;",
"ja540:14.3": "Atha kena nu vaṇṇena,",
"ja540:14.4": "viddheyyaṃ maṃ amaññatha”.",
"ja540:15.1": "“Migo upaṭṭhito āsi,",
"ja540:15.2": "āgato usupātanaṃ;",
"ja540:15.3": "Taṃ disvā ubbijī sāma,",
"ja540:15.4": "tena kodho mamāvisi”.",
"ja540:16.1": "“Yato sarāmi attānaṃ,",
"ja540:16.2": "yato pattosmi viññutaṃ;",
"ja540:16.3": "Na maṃ migā uttasanti,",
"ja540:16.4": "araññe sāpadānipi.",
"ja540:17.1": "Yato nidhiṃ parihariṃ,",
"ja540:17.2": "yato pattosmi yobbanaṃ;",
"ja540:17.3": "Na maṃ migā uttasanti,",
"ja540:17.4": "araññe sāpadānipi.",
"ja540:18.1": "Bhīrū kimpurisā rāja,",
"ja540:18.2": "pabbate gandhamādane;",
"ja540:18.3": "Sammodamānā gacchāma,",
"ja540:18.4": "pabbatāni vanāni ca.",
"ja540:19.1": "Na maṃ migā uttasanti,",
"ja540:19.2": "araññe sāpadānipi;",
"ja540:19.3": "Atha kena nu vaṇṇena,",
"ja540:19.4": "utrāsanti migā mamaṃ”.",
"ja540:20.1": "“Na taṃ tasa migo sāma,",
"ja540:20.2": "kiṃ tāhaṃ alikaṃ bhaṇe;",
"ja540:20.3": "Kodhalobhābhibhūtāhaṃ,",
"ja540:20.4": "usuṃ te taṃ avassajiṃ.",
"ja540:21.1": "Kuto nu sāma āgamma,",
"ja540:21.2": "kassa vā pahito tuvaṃ;",
"ja540:21.3": "Udahāro nadiṃ gaccha,",
"ja540:21.4": "āgato migasammataṃ”.",
"ja540:22.1": "“Andhā mātāpitā mayhaṃ,",
"ja540:22.2": "te bharāmi brahāvane;",
"ja540:22.3": "Tesāhaṃ udakāhāro,",
"ja540:22.4": "āgato migasammataṃ.",
"ja540:23.1": "Atthi nesaṃ usāmattaṃ,",
"ja540:23.2": "atha sāhassa jīvitaṃ;",
"ja540:23.3": "Udakassa alābhena,",
"ja540:23.4": "maññe andhā marissare.",
"ja540:24.1": "Na me idaṃ tathā dukkhaṃ,",
"ja540:24.2": "labbhā hi pumunā idaṃ;",
"ja540:24.3": "Yañca ammaṃ na passāmi,",
"ja540:24.4": "taṃ me dukkhataraṃ ito.",
"ja540:25.1": "Na me idaṃ tathā dukkhaṃ,",
"ja540:25.2": "labbhā hi pumunā idaṃ;",
"ja540:25.3": "Yañca tātaṃ na passāmi,",
"ja540:25.4": "taṃ me dukkhataraṃ ito.",
"ja540:26.1": "Sā nūna kapaṇā ammā,",
"ja540:26.2": "cirarattāya rucchati;",
"ja540:26.3": "Aḍḍharatte va ratte vā,",
"ja540:26.4": "nadīva avasucchati.",
"ja540:27.1": "So nūna kapaṇo tāto,",
"ja540:27.2": "cirarattāya rucchati;",
"ja540:27.3": "Aḍḍharatte va ratte vā,",
"ja540:27.4": "nadīva avasucchati.",
"ja540:28.1": "Uṭṭhānapādacariyāya,",
"ja540:28.2": "pādasambāhanassa ca;",
"ja540:28.3": "Sāma tāta vilapantā,",
"ja540:28.4": "hiṇḍissanti brahāvane.",
"ja540:29.1": "Idampi dutiyaṃ sallaṃ,",
"ja540:29.2": "kampeti hadayaṃ mamaṃ;",
"ja540:29.3": "Yañca andhe na passāmi,",
"ja540:29.4": "maññe hissāmi jīvitaṃ”.",
"ja540:30.1": "“Mā bāḷhaṃ paridevesi,",
"ja540:30.2": "sāma kalyāṇadassana;",
"ja540:30.3": "Ahaṃ kammakaro hutvā,",
"ja540:30.4": "bharissaṃ te brahāvane.",
"ja540:31.1": "Issatthe casmi kusalo,",
"ja540:31.2": "daḷhadhammoti vissuto;",
"ja540:31.3": "Ahaṃ kammakaro hutvā,",
"ja540:31.4": "bharissaṃ te brahāvane.",
"ja540:32.1": "Migānaṃ vighāsamanvesaṃ,",
"ja540:32.2": "Vanamūlaphalāni ca;",
"ja540:32.3": "Ahaṃ kammakaro hutvā,",
"ja540:32.4": "Bharissaṃ te brahāvane.",
"ja540:33.1": "Katamaṃ taṃ vanaṃ sāma,",
"ja540:33.2": "yattha mātāpitā tava;",
"ja540:33.3": "Ahaṃ te tathā bharissaṃ,",
"ja540:33.4": "yathā te abharī tuvaṃ”.",
"ja540:34.1": "“Ayaṃ ekapadī rāja,",
"ja540:34.2": "yoyaṃ ussīsake mama;",
"ja540:34.3": "Ito gantvā aḍḍhakosaṃ,",
"ja540:34.4": "tattha nesaṃ agārakaṃ;",
"ja540:34.5": "Yattha mātāpitā mayhaṃ,",
"ja540:34.6": "te bharassu ito gato.",
"ja540:35.1": "Namo te kāsirājatthu,",
"ja540:35.2": "namo te kāsivaḍḍhana;",
"ja540:35.3": "Andhā mātāpitā mayhaṃ,",
"ja540:35.4": "te bharassu brahāvane.",
"ja540:36.1": "Añjaliṃ te paggaṇhāmi,",
"ja540:36.2": "kāsirāja namatthu te;",
"ja540:36.3": "Mātaraṃ pitaraṃ mayhaṃ,",
"ja540:36.4": "vutto vajjāsi vandanaṃ”.",
"ja540:37.1": "Idaṃ vatvāna so sāmo,",
"ja540:37.2": "yuvā kalyāṇadassano;",
"ja540:37.3": "Mucchito visavegena,",
"ja540:37.4": "visaññī samapajjatha.",
"ja540:38.1": "Sa rājā paridevesi,",
"ja540:38.2": "bahuṃ kāruññasañhitaṃ;",
"ja540:38.3": "“Ajarāmarohaṃ āsiṃ,",
"ja540:38.4": "ajjetaṃ ñāmi no pure;",
"ja540:38.5": "Sāmaṃ kālaṅkataṃ disvā,",
"ja540:38.6": "natthi maccussa nāgamo.",
"ja540:39.1": "Yassu maṃ paṭimanteti,",
"ja540:39.2": "savisena samappito;",
"ja540:39.3": "Svajja evaṃ gate kāle,",
"ja540:39.4": "na kiñci mabhibhāsati.",
"ja540:40.1": "Nirayaṃ nūna gacchāmi,",
"ja540:40.2": "ettha me natthi saṃsayo;",
"ja540:40.3": "Tadā hi pakataṃ pāpaṃ,",
"ja540:40.4": "cirarattāya kibbisaṃ.",
"ja540:41.1": "Bhavanti tassa vattāro,",
"ja540:41.2": "gāme kibbisakārako;",
"ja540:41.3": "Araññe nimmanussamhi,",
"ja540:41.4": "ko maṃ vattumarahati.",
"ja540:42.1": "Sārayanti hi kammāni,",
"ja540:42.2": "gāme saṅgaccha māṇavā;",
"ja540:42.3": "Araññe nimmanussamhi,",
"ja540:42.4": "ko nu maṃ sārayissati”.",
"ja540:43.1": "Sā devatā antarahitā,",
"ja540:43.2": "pabbate gandhamādane;",
"ja540:43.3": "Raññova anukampāya,",
"ja540:43.4": "imā gāthā abhāsatha.",
"ja540:44.1": "“Āguṃ kira mahārāja,",
"ja540:44.2": "akari kamma dukkaṭaṃ;",
"ja540:44.3": "Adūsakā pitāputtā,",
"ja540:44.4": "tayo ekūsunā hatā.",
"ja540:45.1": "Ehi taṃ anusikkhāmi,",
"ja540:45.2": "yathā te sugatī siyā;",
"ja540:45.3": "Dhammenandhe vane posa,",
"ja540:45.4": "maññehaṃ sugatī tayā”.",
"ja540:46.1": "Sa rājā paridevitvā,",
"ja540:46.2": "bahuṃ kāruññasañhitaṃ;",
"ja540:46.3": "Udakakumbhamādāya,",
"ja540:46.4": "pakkāmi dakkhiṇāmukho.",
"ja540:47.1": "“Kassa nu eso padasaddo,",
"ja540:47.2": "manussasseva āgato;",
"ja540:47.3": "Neso sāmassa nigghoso,",
"ja540:47.4": "ko nu tvamasi mārisa.",
"ja540:48.1": "Santañhi sāmo vajati,",
"ja540:48.2": "santaṃ pādāni neyati;",
"ja540:48.3": "Neso sāmassa nigghoso,",
"ja540:48.4": "ko nu tvamasi mārisa”.",
"ja540:49.1": "“Rājāhamasmi kāsīnaṃ,",
"ja540:49.2": "pīḷiyakkhoti maṃ vidū;",
"ja540:49.3": "Lobhā raṭṭhaṃ pahitvāna,",
"ja540:49.4": "migamesaṃ carāmahaṃ.",
"ja540:50.1": "Issatthe casmi kusalo,",
"ja540:50.2": "daḷhadhammoti vissuto;",
"ja540:50.3": "Nāgopi me na mucceyya,",
"ja540:50.4": "āgato usupātanaṃ”.",
"ja540:51.1": "“Svāgataṃ te mahārāja,",
"ja540:51.2": "atho te adurāgataṃ;",
"ja540:51.3": "Issarosi anuppatto,",
"ja540:51.4": "yaṃ idhatthi pavedaya.",
"ja540:52.1": "Tindukāni piyālāni,",
"ja540:52.2": "madhuke kāsumāriyo;",
"ja540:52.3": "Phalāni khuddakappāni,",
"ja540:52.4": "bhuñja rāja varaṃ varaṃ.",
"ja540:53.1": "Idampi pānīyaṃ sītaṃ,",
"ja540:53.2": "ābhataṃ girigabbharā;",
"ja540:53.3": "Tato piva mahārāja,",
"ja540:53.4": "sace tvaṃ abhikaṅkhasi”.",
"ja540:54.1": "“Nālaṃ andhā vane daṭṭhuṃ,",
"ja540:54.2": "ko nu vo phalamāhari;",
"ja540:54.3": "Anandhassevayaṃ sammā,",
"ja540:54.4": "nivāpo mayha khāyati”.",
"ja540:55.1": "“Daharo yuvā nātibrahā,",
"ja540:55.2": "sāmo kalyāṇadassano;",
"ja540:55.3": "Dīghassa kesā asitā,",
"ja540:55.4": "atho sūnaggavellitā.",
"ja540:56.1": "So have phalamāharitvā,",
"ja540:56.2": "ito ādāya kamaṇḍaluṃ;",
"ja540:56.3": "Nadiṃ gato udahāro,",
"ja540:56.4": "maññe na dūramāgato”.",
"ja540:57.1": "“Ahaṃ taṃ avadhiṃ sāmaṃ,",
"ja540:57.2": "yo tuyhaṃ paricārako;",
"ja540:57.3": "Yaṃ kumāraṃ pavedetha,",
"ja540:57.4": "sāmaṃ kalyāṇadassanaṃ.",
"ja540:58.1": "Dīghassa kesā asitā,",
"ja540:58.2": "atho sūnaggavellitā;",
"ja540:58.3": "Tesu lohitalittesu,",
"ja540:58.4": "seti sāmo mayā hato”.",
"ja540:59.1": "“Kena dukūla mantesi,",
"ja540:59.2": "hato sāmoti vādinā;",
"ja540:59.3": "Hato sāmoti sutvāna,",
"ja540:59.4": "hadayaṃ me pavedhati.",
"ja540:60.1": "Assatthasseva taruṇaṃ,",
"ja540:60.2": "pavāḷaṃ māluteritaṃ;",
"ja540:60.3": "Hato sāmoti sutvāna,",
"ja540:60.4": "hadayaṃ me pavedhati”.",
"ja540:61.1": "“Pārike kāsirājāyaṃ,",
"ja540:61.2": "so sāmaṃ migasammate;",
"ja540:61.3": "Kodhasā usunā vijjhi,",
"ja540:61.4": "tassa mā pāpamicchimhā”.",
"ja540:62.1": "“Kicchā laddho piyo putto,",
"ja540:62.2": "yo andhe abharī vane;",
"ja540:62.3": "Taṃ ekaputtaṃ ghātimhi,",
"ja540:62.4": "kathaṃ cittaṃ na kopaye”.",
"ja540:63.1": "“Kicchā laddho piyo putto,",
"ja540:63.2": "yo andhe abharī vane;",
"ja540:63.3": "Taṃ ekaputtaṃ ghātimhi,",
"ja540:63.4": "akkodhaṃ āhu paṇḍitā”.",
"ja540:64.1": "“Mā bāḷhaṃ paridevetha,",
"ja540:64.2": "hato sāmoti vādinā;",
"ja540:64.3": "Ahaṃ kammakaro hutvā,",
"ja540:64.4": "bharissāmi brahāvane.",
"ja540:65.1": "Issatthe casmi kusalo,",
"ja540:65.2": "daḷhadhammoti vissuto;",
"ja540:65.3": "Ahaṃ kammakaro hutvā,",
"ja540:65.4": "bharissāmi brahāvane.",
"ja540:66.1": "Migānaṃ vighāsamanvesaṃ,",
"ja540:66.2": "vanamūlaphalāni ca;",
"ja540:66.3": "Ahaṃ kammakaro hutvā,",
"ja540:66.4": "bharissāmi brahāvane”.",
"ja540:67.1": "“Nesa dhammo mahārāja,",
"ja540:67.2": "netaṃ amhesu kappati;",
"ja540:67.3": "Rājā tvamasi amhākaṃ,",
"ja540:67.4": "pāde vandāma te mayaṃ”.",
"ja540:68.1": "“Dhammaṃ nesādā bhaṇatha,",
"ja540:68.2": "katā apacitī tayā;",
"ja540:68.3": "Pitā tvamasi amhākaṃ,",
"ja540:68.4": "mātā tvamasi pārike”.",
"ja540:69.1": "“Namo te kāsirājatthu,",
"ja540:69.2": "namo te kāsivaḍḍhana;",
"ja540:69.3": "Añjaliṃ te paggaṇhāma,",
"ja540:69.4": "yāva sāmānupāpaya.",
"ja540:70.1": "Tassa pāde samajjantā,",
"ja540:70.2": "mukhañca bhujadassanaṃ;",
"ja540:70.3": "Saṃsumbhamānā attānaṃ,",
"ja540:70.4": "kālamāgamayāmase”.",
"ja540:71.1": "“Brahā vāḷamigākiṇṇaṃ,",
"ja540:71.2": "ākāsantaṃva dissati;",
"ja540:71.3": "Yattha sāmo hato seti,",
"ja540:71.4": "candova patito chamā.",
"ja540:72.1": "Brahā vāḷamigākiṇṇaṃ,",
"ja540:72.2": "ākāsantaṃva dissati;",
"ja540:72.3": "Yattha sāmo hato seti,",
"ja540:72.4": "sūriyova patito chamā.",
"ja540:73.1": "Brahā vāḷamigākiṇṇaṃ,",
"ja540:73.2": "ākāsantaṃva dissati;",
"ja540:73.3": "Yattha sāmo hato seti,",
"ja540:73.4": "paṃsunā patikunthito.",
"ja540:74.1": "Brahā vāḷamigākiṇṇaṃ,",
"ja540:74.2": "ākāsantaṃva dissati;",
"ja540:74.3": "Yattha sāmo hato seti,",
"ja540:74.4": "idheva vasathassame”.",
"ja540:75.1": "“Yadi tattha sahassāni,",
"ja540:75.2": "satāni niyutāni ca;",
"ja540:75.3": "Nevamhākaṃ bhayaṃ koci,",
"ja540:75.4": "vane vāḷesu vijjati”.",
"ja540:76.1": "Tato andhānamādāya,",
"ja540:76.2": "kāsirājā brahāvane;",
"ja540:76.3": "Hatthe gahetvā pakkāmi,",
"ja540:76.4": "yattha sāmo hato ahu.",
"ja540:77.1": "Disvāna patitaṃ sāmaṃ,",
"ja540:77.2": "puttakaṃ paṃsukunthitaṃ;",
"ja540:77.3": "Apaviddhaṃ brahāraññe,",
"ja540:77.4": "candaṃva patitaṃ chamā.",
"ja540:78.1": "Disvāna patitaṃ sāmaṃ,",
"ja540:78.2": "puttakaṃ paṃsukunthitaṃ;",
"ja540:78.3": "Apaviddhaṃ brahāraññe,",
"ja540:78.4": "sūriyaṃva patitaṃ chamā.",
"ja540:79.1": "Disvāna patitaṃ sāmaṃ,",
"ja540:79.2": "puttakaṃ paṃsukunthitaṃ;",
"ja540:79.3": "Apaviddhaṃ brahāraññe,",
"ja540:79.4": "kalūnaṃ paridevayuṃ.",
"ja540:80.1": "Disvāna patitaṃ sāmaṃ,",
"ja540:80.2": "puttakaṃ paṃsukunthitaṃ;",
"ja540:80.3": "Bāhā paggayha pakkanduṃ,",
"ja540:80.4": "“adhammo kira bho iti.",
"ja540:81.1": "Bāḷhaṃ kho tvaṃ pamattosi,",
"ja540:81.2": "sāma kalyāṇadassana;",
"ja540:81.3": "Yo ajjevaṃ gate kāle,",
"ja540:81.4": "na kiñci mabhibhāsasi.",
"ja540:82.1": "Bāḷhaṃ kho tvaṃ padittosi,",
"ja540:82.2": "sāma kalyāṇadassana;",
"ja540:82.3": "Yo ajjevaṃ gate kāle,",
"ja540:82.4": "na kiñci mabhibhāsasi.",
"ja540:83.1": "Bāḷhaṃ kho tvaṃ pakuddhosi,",
"ja540:83.2": "sāma kalyāṇadassana;",
"ja540:83.3": "Yo ajjevaṃ gate kāle,",
"ja540:83.4": "na kiñci mabhibhāsasi.",
"ja540:84.1": "Bāḷhaṃ kho tvaṃ pasuttosi,",
"ja540:84.2": "sāma kalyāṇadassana;",
"ja540:84.3": "Yo ajjevaṃ gate kāle,",
"ja540:84.4": "na kiñci mabhibhāsasi.",
"ja540:85.1": "Bāḷhaṃ kho tvaṃ vimanosi,",
"ja540:85.2": "sāma kalyāṇadassana;",
"ja540:85.3": "Yo ajjevaṃ gate kāle,",
"ja540:85.4": "na kiñci mabhibhāsasi.",
"ja540:86.1": "Jaṭaṃ valinaṃ paṃsugataṃ,",
"ja540:86.2": "ko dāni saṇṭhapessati;",
"ja540:86.3": "Sāmo ayaṃ kālaṅkato,",
"ja540:86.4": "andhānaṃ paricārako.",
"ja540:87.1": "Ko me sammajjamādāya,",
"ja540:87.2": "sammajjissati assamaṃ;",
"ja540:87.3": "Sāmo ayaṃ kālaṅkato,",
"ja540:87.4": "andhānaṃ paricārako.",
"ja540:88.1": "Ko dāni nhāpayissati,",
"ja540:88.2": "sītenuṇhodakena ca;",
"ja540:88.3": "Sāmo ayaṃ kālaṅkato,",
"ja540:88.4": "andhānaṃ paricārako.",
"ja540:89.1": "Ko dāni bhojayissati,",
"ja540:89.2": "vanamūlaphalāni ca;",
"ja540:89.3": "Sāmo ayaṃ kālaṅkato,",
"ja540:89.4": "andhānaṃ paricārako”.",
"ja540:90.1": "Disvāna patitaṃ sāmaṃ,",
"ja540:90.2": "puttakaṃ paṃsukunthitaṃ;",
"ja540:90.3": "Aṭṭitā puttasokena,",
"ja540:90.4": "mātā saccaṃ abhāsatha.",
"ja540:91.1": "“Yena saccenayaṃ sāmo,",
"ja540:91.2": "dhammacārī pure ahu;",
"ja540:91.3": "Etena saccavajjena,",
"ja540:91.4": "visaṃ sāmassa haññatu.",
"ja540:92.1": "Yena saccenayaṃ sāmo,",
"ja540:92.2": "brahmacārī pure ahu;",
"ja540:92.3": "Etena saccavajjena,",
"ja540:92.4": "visaṃ sāmassa haññatu.",
"ja540:93.1": "Yena saccenayaṃ sāmo,",
"ja540:93.2": "saccavādī pure ahu;",
"ja540:93.3": "Etena saccavajjena,",
"ja540:93.4": "visaṃ sāmassa haññatu.",
"ja540:94.1": "Yena saccenayaṃ sāmo,",
"ja540:94.2": "mātāpettibharo ahu;",
"ja540:94.3": "Etena saccavajjena,",
"ja540:94.4": "visaṃ sāmassa haññatu.",
"ja540:95.1": "Yena saccenayaṃ sāmo,",
"ja540:95.2": "kule jeṭṭhāpacāyiko;",
"ja540:95.3": "Etena saccavajjena,",
"ja540:95.4": "visaṃ sāmassa haññatu.",
"ja540:96.1": "Yena saccenayaṃ sāmo,",
"ja540:96.2": "pāṇā piyataro mama;",
"ja540:96.3": "Etena saccavajjena,",
"ja540:96.4": "visaṃ sāmassa haññatu.",
"ja540:97.1": "Yaṃ kiñcitthi kataṃ puññaṃ,",
"ja540:97.2": "Mayhañceva pitucca te;",
"ja540:97.3": "Sabbena tena kusalena,",
"ja540:97.4": "Visaṃ sāmassa haññatu”.",
"ja540:98.1": "Disvāna patitaṃ sāmaṃ,",
"ja540:98.2": "puttakaṃ paṃsukunthitaṃ;",
"ja540:98.3": "Aṭṭito puttasokena,",
"ja540:98.4": "pitā saccaṃ abhāsatha.",
"ja540:99.1": "“Yena saccenayaṃ sāmo,",
"ja540:99.2": "dhammacārī pure ahu;",
"ja540:99.3": "Etena saccavajjena,",
"ja540:99.4": "visaṃ sāmassa haññatu.",
"ja540:100.1": "Yena saccenayaṃ sāmo,",
"ja540:100.2": "brahmacārī pure ahu;",
"ja540:100.3": "Etena saccavajjena,",
"ja540:100.4": "visaṃ sāmassa haññatu.",
"ja540:101.1": "Yena saccenayaṃ sāmo,",
"ja540:101.2": "saccavādī pure ahu;",
"ja540:101.3": "Etena saccavajjena,",
"ja540:101.4": "visaṃ sāmassa haññatu.",
"ja540:102.1": "Yena saccenayaṃ sāmo,",
"ja540:102.2": "mātāpettibharo ahu;",
"ja540:102.3": "Etena saccavajjena,",
"ja540:102.4": "visaṃ sāmassa haññatu.",
"ja540:103.1": "Yena saccenayaṃ sāmo,",
"ja540:103.2": "kule jeṭṭhāpacāyiko;",
"ja540:103.3": "Etena saccavajjena,",
"ja540:103.4": "visaṃ sāmassa haññatu.",
"ja540:104.1": "Yena saccenayaṃ sāmo,",
"ja540:104.2": "pāṇā piyataro mama;",
"ja540:104.3": "Etena saccavajjena,",
"ja540:104.4": "visaṃ sāmassa haññatu.",
"ja540:105.1": "Yaṃ kiñcitthi kataṃ puññaṃ,",
"ja540:105.2": "Mayhañceva mātucca te;",
"ja540:105.3": "Sabbena tena kusalena,",
"ja540:105.4": "Visaṃ sāmassa haññatu.",
"ja540:106.1": "Sā devatā antarahitā,",
"ja540:106.2": "pabbate gandhamādane;",
"ja540:106.3": "Sāmassa anukampāya,",
"ja540:106.4": "imaṃ saccaṃ abhāsatha.",
"ja540:107.1": "Pabbatyāhaṃ gandhamādane,",
"ja540:107.2": "cirarattanivāsinī;",
"ja540:107.3": "Na me piyataro koci,",
"ja540:107.4": "añño sāmena vijjati;",
"ja540:107.5": "Etena saccavajjena,",
"ja540:107.6": "visaṃ sāmassa haññatu.",
"ja540:108.1": "Sabbe vanā gandhamayā,",
"ja540:108.2": "pabbate gandhamādane;",
"ja540:108.3": "Etena saccavajjena,",
"ja540:108.4": "visaṃ sāmassa haññatu”.",
"ja540:109.1": "Tesaṃ lālappamānānaṃ,",
"ja540:109.2": "bahuṃ kāruññasañhitaṃ;",
"ja540:109.3": "Khippaṃ sāmo samuṭṭhāsi,",
"ja540:109.4": "yuvā kalyāṇadassano.",
"ja540:110.1": "“Sāmohamasmi bhaddaṃ vo,",
"ja540:110.2": "Sotthināmhi samuṭṭhito;",
"ja540:110.3": "Mā bāḷhaṃ paridevetha,",
"ja540:110.4": "Mañjunābhivadetha maṃ”.",
"ja540:111.1": "“Svāgataṃ te mahārāja,",
"ja540:111.2": "atho te adurāgataṃ;",
"ja540:111.3": "Issarosi anuppatto,",
"ja540:111.4": "yaṃ idhatthi pavedaya.",
"ja540:112.1": "Tindukāni piyālāni,",
"ja540:112.2": "madhuke kāsumāriyo;",
"ja540:112.3": "Phalāni khuddakappāni,",
"ja540:112.4": "bhuñja rāja varaṃ varaṃ.",
"ja540:113.1": "Atthi me pānīyaṃ sītaṃ,",
"ja540:113.2": "ābhataṃ girigabbharā;",
"ja540:113.3": "Tato piva mahārāja,",
"ja540:113.4": "sace tvaṃ abhikaṅkhasi”.",
"ja540:114.1": "“Sammuyhāmi pamuyhāmi,",
"ja540:114.2": "sabbā muyhanti me disā;",
"ja540:114.3": "Petaṃ taṃ sāma maddakkhiṃ,",
"ja540:114.4": "ko nu tvaṃ sāma jīvasi”.",
"ja540:115.1": "“Api jīvaṃ mahārāja,",
"ja540:115.2": "purisaṃ gāḷhavedanaṃ;",
"ja540:115.3": "Upanītamanasaṅkappaṃ,",
"ja540:115.4": "jīvantaṃ maññate mataṃ.",
"ja540:116.1": "Api jīvaṃ mahārāja,",
"ja540:116.2": "purisaṃ gāḷhavedanaṃ;",
"ja540:116.3": "Taṃ nirodhagataṃ santaṃ,",
"ja540:116.4": "jīvantaṃ maññate mataṃ.",
"ja540:117.1": "Yo mātaraṃ pitaraṃ vā,",
"ja540:117.2": "macco dhammena posati;",
"ja540:117.3": "Devāpi naṃ tikicchanti,",
"ja540:117.4": "mātāpettibharaṃ naraṃ.",
"ja540:118.1": "Yo mātaraṃ pitaraṃ vā,",
"ja540:118.2": "macco dhammena posati;",
"ja540:118.3": "Idheva naṃ pasaṃsanti,",
"ja540:118.4": "pecca sagge pamodati”.",
"ja540:119.1": "“Esa bhiyyo pamuyhāmi,",
"ja540:119.2": "Sabbā muyhanti me disā;",
"ja540:119.3": "Saraṇaṃ taṃ sāma gacchāmi,",
"ja540:119.4": "Tvañca me saraṇaṃ bhava”.",
"ja540:120.1": "“Dhammaṃ cara mahārāja,",
"ja540:120.2": "mātāpitūsu khattiya;",
"ja540:120.3": "Idha dhammaṃ caritvāna,",
"ja540:120.4": "rāja saggaṃ gamissasi.",
"ja540:121.1": "Dhammaṃ cara mahārāja,",
"ja540:121.2": "puttadāresu khattiya;",
"ja540:121.3": "Idha dhammaṃ caritvāna,",
"ja540:121.4": "rāja saggaṃ gamissasi.",
"ja540:122.1": "Dhammaṃ cara mahārāja,",
"ja540:122.2": "mittāmaccesu khattiya;",
"ja540:122.3": "Idha dhammaṃ caritvāna,",
"ja540:122.4": "rāja saggaṃ gamissasi.",
"ja540:123.1": "Dhammaṃ cara mahārāja,",
"ja540:123.2": "vāhanesu balesu ca;",
"ja540:123.3": "Idha dhammaṃ caritvāna,",
"ja540:123.4": "rāja saggaṃ gamissasi.",
"ja540:124.1": "Dhammaṃ cara mahārāja,",
"ja540:124.2": "gāmesu nigamesu ca;",
"ja540:124.3": "Idha dhammaṃ caritvāna,",
"ja540:124.4": "rāja saggaṃ gamissasi.",
"ja540:125.1": "Dhammaṃ cara mahārāja,",
"ja540:125.2": "raṭṭhesu janapadesu ca;",
"ja540:125.3": "Idha dhammaṃ caritvāna,",
"ja540:125.4": "rāja saggaṃ gamissasi.",
"ja540:126.1": "Dhammaṃ cara mahārāja,",
"ja540:126.2": "samaṇabrāhmaṇesu ca;",
"ja540:126.3": "Idha dhammaṃ caritvāna,",
"ja540:126.4": "rāja saggaṃ gamissasi.",
"ja540:127.1": "Dhammaṃ cara mahārāja,",
"ja540:127.2": "migapakkhīsu khattiya;",
"ja540:127.3": "Idha dhammaṃ caritvāna,",
"ja540:127.4": "rāja saggaṃ gamissasi.",
"ja540:128.1": "Dhammaṃ cara mahārāja,",
"ja540:128.2": "dhammo ciṇṇo sukhāvaho;",
"ja540:128.3": "Idha dhammaṃ caritvāna,",
"ja540:128.4": "rāja saggaṃ gamissasi.",
"ja540:129.1": "Dhammaṃ cara mahārāja,",
"ja540:129.2": "saindā devā sabrahmakā;",
"ja540:129.3": "Suciṇṇena divaṃ pattā,",
"ja540:129.4": "mā dhammaṃ rāja pāmado”ti.",
"ja540:130.1": "Suvaṇṇasāmajātakaṃ tatiyaṃ."
}