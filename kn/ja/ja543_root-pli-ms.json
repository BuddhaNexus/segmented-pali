{
"ja543:1.1": "Jātaka",
"ja543:2.1": "Mahānipāta",
"ja543:3.1": "Mūgapakkhavagga",
"ja543:4.1": "6. Bhūridattajātaka",
"ja543:5.1": "“Yaṃ kiñci ratanaṃ atthi,",
"ja543:5.2": "dhataraṭṭhanivesane;",
"ja543:5.3": "Sabbāni te upayantu,",
"ja543:5.4": "dhītaraṃ dehi rājino”.",
"ja543:6.1": "“Na no vivāho nāgehi,",
"ja543:6.2": "katapubbo kudācanaṃ;",
"ja543:6.3": "Taṃ vivāhaṃ asaṃyuttaṃ,",
"ja543:6.4": "kathaṃ amhe karomase”.",
"ja543:7.1": "“Jīvitaṃ nūna te cattaṃ,",
"ja543:7.2": "raṭṭhaṃ vā manujādhipa;",
"ja543:7.3": "Na hi nāge kupitamhi,",
"ja543:7.4": "ciraṃ jīvanti tādisā.",
"ja543:8.1": "Yo tvaṃ deva manussosi,",
"ja543:8.2": "iddhimantaṃ aniddhimā;",
"ja543:8.3": "Varuṇassa niyaṃputtaṃ,",
"ja543:8.4": "yāmunaṃ atimaññasi”.",
"ja543:9.1": "“Nātimaññāmi rājānaṃ,",
"ja543:9.2": "dhataraṭṭhaṃ yasassinaṃ;",
"ja543:9.3": "Dhataraṭṭho hi nāgānaṃ,",
"ja543:9.4": "bahūnamapi issaro.",
"ja543:10.1": "Ahi mahānubhāvopi,",
"ja543:10.2": "na me dhītaramāraho;",
"ja543:10.3": "Khattiyo ca videhānaṃ,",
"ja543:10.4": "abhijātā samuddajā”.",
"ja543:11.1": "“Kambalassatarā uṭṭhentu,",
"ja543:11.2": "sabbe nāge nivedaya;",
"ja543:11.3": "Bārāṇasiṃ pavajjantu,",
"ja543:11.4": "mā ca kañci viheṭhayuṃ”.",
"ja543:12.1": "“Nivesanesu sobbhesu,",
"ja543:12.2": "rathiyā caccaresu ca;",
"ja543:12.3": "Rukkhaggesu ca lambantu,",
"ja543:12.4": "vitatā toraṇesu ca.",
"ja543:13.1": "Ahampi sabbasetena,",
"ja543:13.2": "mahatā sumahaṃ puraṃ;",
"ja543:13.3": "Parikkhipissaṃ bhogehi,",
"ja543:13.4": "kāsīnaṃ janayaṃ bhayaṃ”.",
"ja543:14.1": "Tassa taṃ vacanaṃ sutvā,",
"ja543:14.2": "uragānekavaṇṇino;",
"ja543:14.3": "Bārāṇasiṃ pavajjiṃsu,",
"ja543:14.4": "na ca kañci viheṭhayuṃ.",
"ja543:15.1": "Nivesanesu sobbhesu,",
"ja543:15.2": "rathiyā caccaresu ca;",
"ja543:15.3": "Rukkhaggesu ca lambiṃsu,",
"ja543:15.4": "vitatā toraṇesu ca.",
"ja543:16.1": "Tesu disvāna lambante,",
"ja543:16.2": "puthū kandiṃsu nāriyo;",
"ja543:16.3": "Nāge soṇḍikate disvā,",
"ja543:16.4": "passasante muhuṃ muhuṃ.",
"ja543:17.1": "Bārāṇasī pabyathitā,",
"ja543:17.2": "āturā samapajjatha;",
"ja543:17.3": "Bāhā paggayha pakkanduṃ,",
"ja543:17.4": "“dhītaraṃ dehi rājino”.",
"ja543:18.1": "()",
"ja543:19.1": "“Pupphābhihārassa vanassa majjhe,",
"ja543:19.2": "Ko lohitakkho vitatantaraṃso;",
"ja543:19.3": "Kā kambukāyūradharā suvatthā,",
"ja543:19.4": "Tiṭṭhanti nāriyo dasa vandamānā.",
"ja543:20.1": "Ko tvaṃ brahābāhu vanassa majjhe,",
"ja543:20.2": "Virocasi ghatasittova aggi;",
"ja543:20.3": "Mahesakkho aññatarosi yakkho,",
"ja543:20.4": "Udāhu nāgosi mahānubhāvo”.",
"ja543:21.1": "“Nāgohamasmi iddhimā,",
"ja543:21.2": "tejassī duratikkamo;",
"ja543:21.3": "Ḍaṃseyyaṃ tejasā kuddho,",
"ja543:21.4": "phītaṃ janapadaṃ api.",
"ja543:22.1": "Samuddajā hi me mātā,",
"ja543:22.2": "dhataraṭṭho ca me pitā;",
"ja543:22.3": "Sudassanakaniṭṭhosmi,",
"ja543:22.4": "bhūridattoti maṃ vidū.",
"ja543:23.1": "Yaṃ gambhīraṃ sadāvaṭṭaṃ,",
"ja543:23.2": "rahadaṃ bhismaṃ pekkhasi;",
"ja543:23.3": "Esa dibyo mamāvāso,",
"ja543:23.4": "anekasataporiso.",
"ja543:24.1": "Mayūrakoñcābhirudaṃ,",
"ja543:24.2": "nīlodaṃ vanamajjhato;",
"ja543:24.3": "Yamunaṃ pavisa mā bhīto,",
"ja543:24.4": "khemaṃ vattavataṃ sivaṃ.",
"ja543:25.1": "Tattha patto sānucaro,",
"ja543:25.2": "saha puttena brāhmaṇa;",
"ja543:25.3": "Pūjito mayhaṃ kāmehi,",
"ja543:25.4": "sukhaṃ brāhmaṇa vacchasi”.",
"ja543:26.1": "“Samā samantaparito,",
"ja543:26.2": "pahūtatagarā mahī;",
"ja543:26.3": "Indagopakasañchannā,",
"ja543:26.4": "sobhati harituttamā.",
"ja543:27.1": "Rammāni vanacetyāni,",
"ja543:27.2": "rammā haṃsūpakūjitā;",
"ja543:27.3": "Opupphāpadmā tiṭṭhanti,",
"ja543:27.4": "pokkharañño sunimmitā.",
"ja543:28.1": "Aṭṭhaṃsā sukatā thambhā,",
"ja543:28.2": "sabbe veḷuriyāmayā;",
"ja543:28.3": "Sahassathambhā pāsādā,",
"ja543:28.4": "pūrā kaññāhi jotare.",
"ja543:29.1": "Vimānaṃ upapannosi,",
"ja543:29.2": "dibyaṃ puññehi attano;",
"ja543:29.3": "Asambādhaṃ sivaṃ rammaṃ,",
"ja543:29.4": "accantasukhasaṃhitaṃ.",
"ja543:30.1": "Maññe sahassanettassa,",
"ja543:30.2": "vimānaṃ nābhikaṅkhasi;",
"ja543:30.3": "Iddhī hi tyāyaṃ vipulā,",
"ja543:30.4": "sakkasseva jutīmato”.",
"ja543:31.1": "“Manasāpi na pattabbo,",
"ja543:31.2": "ānubhāvo jutīmato;",
"ja543:31.3": "Paricārayamānānaṃ,",
"ja543:31.4": "saindānaṃ vasavattinaṃ.",
"ja543:32.1": "Taṃ vimānaṃ abhijjhāya,",
"ja543:32.2": "amarānaṃ sukhesinaṃ;",
"ja543:32.3": "Uposathaṃ upavasanto,",
"ja543:32.4": "semi vammikamuddhani”.",
"ja543:33.1": "“Ahañca migamesāno,",
"ja543:33.2": "saputto pāvisiṃ vanaṃ;",
"ja543:33.3": "Taṃ maṃ mataṃ vā jīvaṃ vā,",
"ja543:33.4": "nābhivedenti ñātakā.",
"ja543:34.1": "Āmantaye bhūridattaṃ,",
"ja543:34.2": "kāsiputtaṃ yasassinaṃ;",
"ja543:34.3": "Tayā no samanuññātā,",
"ja543:34.4": "api passemu ñātake”.",
"ja543:35.1": "“Eso hi vata me chando,",
"ja543:35.2": "yaṃ vasesi mamantike;",
"ja543:35.3": "Na hi etādisā kāmā,",
"ja543:35.4": "sulabhā honti mānuse.",
"ja543:36.1": "Sace tvaṃ nicchase vatthuṃ,",
"ja543:36.2": "mama kāmehi pūjito;",
"ja543:36.3": "Mayā tvaṃ samanuññāto,",
"ja543:36.4": "sotthiṃ passāhi ñātake”.",
"ja543:37.1": "“Dhārayimaṃ maṇiṃ dibyaṃ,",
"ja543:37.2": "pasuṃ putte ca vindati;",
"ja543:37.3": "Arogo sukhito hoti,",
"ja543:37.4": "gacchevādāya brāhmaṇa”.",
"ja543:38.1": "“Kusalaṃ paṭinandāmi,",
"ja543:38.2": "bhūridatta vaco tava;",
"ja543:38.3": "Pabbajissāmi jiṇṇosmi,",
"ja543:38.4": "na kāme abhipatthaye”.",
"ja543:39.1": "“Brahmacariyassa ce bhaṅgo,",
"ja543:39.2": "hoti bhogehi kāriyaṃ;",
"ja543:39.3": "Avikampamāno eyyāsi,",
"ja543:39.4": "bahuṃ dassāmi te dhanaṃ”.",
"ja543:40.1": "“Kusalaṃ paṭinandāmi,",
"ja543:40.2": "bhūridatta vaco tava;",
"ja543:40.3": "Punapi āgamissāmi,",
"ja543:40.4": "sace attho bhavissati”.",
"ja543:41.1": "Idaṃ vatvā bhūridatto,",
"ja543:41.2": "Pesesi caturo jane;",
"ja543:41.3": "“Etha gacchatha uṭṭhetha,",
"ja543:41.4": "Khippaṃ pāpetha brāhmaṇaṃ”.",
"ja543:42.1": "Tassa taṃ vacanaṃ sutvā,",
"ja543:42.2": "uṭṭhāya caturo janā;",
"ja543:42.3": "Pesitā bhūridattena,",
"ja543:42.4": "khippaṃ pāpesu brāhmaṇaṃ.",
"ja543:43.1": "()",
"ja543:44.1": "“Maṇiṃ paggayha maṅgalyaṃ,",
"ja543:44.2": "sādhuvittaṃ manoramaṃ;",
"ja543:44.3": "Selaṃ byañjanasampannaṃ,",
"ja543:44.4": "ko imaṃ maṇimajjhagā”.",
"ja543:45.1": "“Lohitakkhasahassāhi,",
"ja543:45.2": "samantā parivāritaṃ;",
"ja543:45.3": "Ajja kālaṃ pathaṃ gacchaṃ,",
"ja543:45.4": "ajjhagāhaṃ maṇiṃ imaṃ”.",
"ja543:46.1": "“Sūpaciṇṇo ayaṃ selo,",
"ja543:46.2": "accito mānito sadā;",
"ja543:46.3": "Sudhārito sunikkhitto,",
"ja543:46.4": "sabbatthamabhisādhaye.",
"ja543:47.1": "Upacāravipannassa,",
"ja543:47.2": "nikkhepe dhāraṇāya vā;",
"ja543:47.3": "Ayaṃ selo vināsāya,",
"ja543:47.4": "pariciṇṇo ayoniso.",
"ja543:48.1": "Na imaṃ akusalo dibyaṃ,",
"ja543:48.2": "maṇiṃ dhāretumāraho;",
"ja543:48.3": "Paṭipajja sataṃ nikkhaṃ,",
"ja543:48.4": "dehimaṃ ratanaṃ mama”.",
"ja543:49.1": "“Na ca myāyaṃ maṇī keyyo,",
"ja543:49.2": "gohi vā ratanehi vā;",
"ja543:49.3": "Selo byañjanasampanno,",
"ja543:49.4": "neva keyyo maṇī mama”.",
"ja543:50.1": "“No ce tayā maṇī keyyo,",
"ja543:50.2": "gohi vā ratanehi vā;",
"ja543:50.3": "Atha kena maṇī keyyo,",
"ja543:50.4": "taṃ me akkhāhi pucchito”.",
"ja543:51.1": "“Yo me saṃse mahānāgaṃ,",
"ja543:51.2": "tejassiṃ duratikkamaṃ;",
"ja543:51.3": "Tassa dajjaṃ imaṃ selaṃ,",
"ja543:51.4": "jalantamiva tejasā”.",
"ja543:52.1": "“Ko nu brāhmaṇavaṇṇena,",
"ja543:52.2": "supaṇṇo patataṃ varo;",
"ja543:52.3": "Nāgaṃ jigīsamanvesi,",
"ja543:52.4": "anvesaṃ bhakkhamattano”.",
"ja543:53.1": "“Nāhaṃ dijādhipo homi,",
"ja543:53.2": "na diṭṭho garuḷo mayā;",
"ja543:53.3": "Āsīvisena vittoti,",
"ja543:53.4": "vajjo brāhmaṇa maṃ vidū”.",
"ja543:54.1": "“Kiṃ nu tuyhaṃ balaṃ atthi,",
"ja543:54.2": "kiṃ sippaṃ vijjate tava;",
"ja543:54.3": "Kismiṃ vā tvaṃ paratthaddho,",
"ja543:54.4": "uragaṃ nāpacāyasi”.",
"ja543:55.1": "“Āraññikassa isino,",
"ja543:55.2": "cirarattaṃ tapassino;",
"ja543:55.3": "Supaṇṇo kosiyassakkhā,",
"ja543:55.4": "visavijjaṃ anuttaraṃ.",
"ja543:56.1": "Taṃ bhāvitattaññataraṃ,",
"ja543:56.2": "sammantaṃ pabbatantare;",
"ja543:56.3": "Sakkaccaṃ taṃ upaṭṭhāsiṃ,",
"ja543:56.4": "rattindivamatandito.",
"ja543:57.1": "So tadā pariciṇṇo me,",
"ja543:57.2": "vattavā brahmacariyavā;",
"ja543:57.3": "Dibbaṃ pātukarī mantaṃ,",
"ja543:57.4": "kāmasā bhagavā mama.",
"ja543:58.1": "Tyāhaṃ mante paratthaddho,",
"ja543:58.2": "nāhaṃ bhāyāmi bhoginaṃ;",
"ja543:58.3": "Ācariyo visaghātānaṃ,",
"ja543:58.4": "alampānoti maṃ vidū”.",
"ja543:59.1": "“Gaṇhāmase maṇiṃ tāta,",
"ja543:59.2": "somadatta vijānahi;",
"ja543:59.3": "Mā daṇḍena siriṃ pattaṃ,",
"ja543:59.4": "kāmasā pajahimhase”.",
"ja543:60.1": "“Sakaṃ nivesanaṃ pattaṃ,",
"ja543:60.2": "yo taṃ brāhmaṇa pūjayi;",
"ja543:60.3": "Evaṃ kalyāṇakārissa,",
"ja543:60.4": "kiṃ mohā dubbhimicchasi.",
"ja543:61.1": "Sace tvaṃ dhanakāmosi,",
"ja543:61.2": "bhūridatto padassati;",
"ja543:61.3": "Tameva gantvā yācassu,",
"ja543:61.4": "bahuṃ dassati te dhanaṃ”.",
"ja543:62.1": "“Hatthagataṃ pattagataṃ,",
"ja543:62.2": "nikiṇṇaṃ khādituṃ varaṃ;",
"ja543:62.3": "Mā no sandiṭṭhiko attho,",
"ja543:62.4": "somadatta upaccagā”.",
"ja543:63.1": "“Paccati niraye ghore,",
"ja543:63.2": "mahissamapi vivarati;",
"ja543:63.3": "Mittadubbhī hitaccāgī,",
"ja543:63.4": "jīvarevāpi sussati.",
"ja543:64.1": "Sace tvaṃ dhanakāmosi,",
"ja543:64.2": "bhūridatto padassati;",
"ja543:64.3": "Maññe attakataṃ veraṃ,",
"ja543:64.4": "naciraṃ vedayissasi”.",
"ja543:65.1": "“Mahāyaññaṃ yajitvāna,",
"ja543:65.2": "evaṃ sujjhanti brāhmaṇā;",
"ja543:65.3": "Mahāyaññaṃ yajissāma,",
"ja543:65.4": "evaṃ mokkhāma pāpakā”.",
"ja543:66.1": "“Handa dāni apāyāmi,",
"ja543:66.2": "nāhaṃ ajja tayā saha;",
"ja543:66.3": "Padampekaṃ na gaccheyyaṃ,",
"ja543:66.4": "evaṃ kibbisakārinā”.",
"ja543:67.1": "Idaṃ vatvāna pitaraṃ,",
"ja543:67.2": "somadatto bahussuto;",
"ja543:67.3": "Ujjhāpetvāna bhūtāni,",
"ja543:67.4": "tamhā ṭhānā apakkami.",
"ja543:68.1": "“Gaṇhāhetaṃ mahānāgaṃ,",
"ja543:68.2": "āharetaṃ maṇiṃ mama;",
"ja543:68.3": "Indagopakavaṇṇābho,",
"ja543:68.4": "yassa lohitako siro.",
"ja543:69.1": "Kappāsapicurāsīva,",
"ja543:69.2": "eso kāyo padissati;",
"ja543:69.3": "Vammikaggagato seti,",
"ja543:69.4": "taṃ tvaṃ gaṇhāhi brāhmaṇa”.",
"ja543:70.1": "Athosadhehi dibbehi,",
"ja543:70.2": "jappaṃ mantapadāni ca;",
"ja543:70.3": "Evaṃ taṃ asakkhi satthuṃ,",
"ja543:70.4": "katvā parittamattano.",
"ja543:71.1": "()",
"ja543:72.1": "“Mamaṃ disvāna āyantaṃ,",
"ja543:72.2": "sabbakāmasamiddhinaṃ;",
"ja543:72.3": "Indriyāni ahaṭṭhāni,",
"ja543:72.4": "sāvaṃ jātaṃ mukhaṃ tava.",
"ja543:73.1": "Padmaṃ yathā hatthagataṃ,",
"ja543:73.2": "Pāṇinā parimadditaṃ;",
"ja543:73.3": "Sāvaṃ jātaṃ mukhaṃ tuyhaṃ,",
"ja543:73.4": "Mamaṃ disvāna edisaṃ.",
"ja543:74.1": "Kacci nu te nābhisasi,",
"ja543:74.2": "kacci te atthi vedanā;",
"ja543:74.3": "Yena sāvaṃ mukhaṃ tuyhaṃ,",
"ja543:74.4": "mamaṃ disvāna āgataṃ”.",
"ja543:75.1": "“Supinaṃ tāta addakkhiṃ,",
"ja543:75.2": "ito māsaṃ adhogataṃ;",
"ja543:75.3": "Dakkhiṇaṃ viya me bāhuṃ,",
"ja543:75.4": "chetvā ruhiramakkhitaṃ;",
"ja543:75.5": "Puriso ādāya pakkāmi,",
"ja543:75.6": "mama rodantiyā sati.",
"ja543:76.1": "Yatohaṃ supinamaddakkhiṃ,",
"ja543:76.2": "sudassana vijānahi;",
"ja543:76.3": "Tato divā vā rattiṃ vā,",
"ja543:76.4": "sukhaṃ me nopalabbhati”.",
"ja543:77.1": "“Yaṃ pubbe parivāriṃsu,",
"ja543:77.2": "kaññā ruciraviggahā;",
"ja543:77.3": "Hemajālapaṭicchannā,",
"ja543:77.4": "bhūridatto na dissati.",
"ja543:78.1": "Yaṃ pubbe parivāriṃsu,",
"ja543:78.2": "nettiṃsavaradhārino;",
"ja543:78.3": "Kaṇikārāva samphullā,",
"ja543:78.4": "bhūridatto na dissati.",
"ja543:79.1": "Handa dāni gamissāma,",
"ja543:79.2": "bhūridattanivesanaṃ;",
"ja543:79.3": "Dhammaṭṭhaṃ sīlasampannaṃ,",
"ja543:79.4": "passāma tava bhātaraṃ”.",
"ja543:80.1": "Tañca disvāna āyantiṃ,",
"ja543:80.2": "bhūridattassa mātaraṃ;",
"ja543:80.3": "Bāhā paggayha pakkanduṃ,",
"ja543:80.4": "bhūridattassa nāriyo.",
"ja543:81.1": "“Puttaṃ teyye na jānāma,",
"ja543:81.2": "ito māsaṃ adhogataṃ;",
"ja543:81.3": "Mataṃ vā yadi vā jīvaṃ,",
"ja543:81.4": "bhūridattaṃ yasassinaṃ.",
"ja543:82.1": "Sakuṇī hataputtāva,",
"ja543:82.2": "suññaṃ disvā kulāvakaṃ;",
"ja543:82.3": "Ciraṃ dukkhena jhāyissaṃ,",
"ja543:82.4": "bhūridattaṃ apassatī.",
"ja543:83.1": "Kurarī hatachāpāva,",
"ja543:83.2": "suññaṃ disvā kulāvakaṃ;",
"ja543:83.3": "Ciraṃ dukkhena jhāyissaṃ,",
"ja543:83.4": "bhūridattaṃ apassatī.",
"ja543:84.1": "Sā nūna cakkavākīva,",
"ja543:84.2": "pallalasmiṃ anodake;",
"ja543:84.3": "Ciraṃ dukkhena jhāyissaṃ,",
"ja543:84.4": "bhūridattaṃ apassatī.",
"ja543:85.1": "Kammārānaṃ yathā ukkā,",
"ja543:85.2": "anto jhāyati no bahi;",
"ja543:85.3": "Evaṃ jhāyāmi sokena,",
"ja543:85.4": "bhūridattaṃ apassatī”.",
"ja543:86.1": "Sālāva sampamathitā,",
"ja543:86.2": "mālutena pamadditā;",
"ja543:86.3": "Senti puttā ca dārā ca,",
"ja543:86.4": "bhūridattanivesane.",
"ja543:87.1": "Idaṃ sutvāna nigghosaṃ,",
"ja543:87.2": "bhūridattanivesane;",
"ja543:87.3": "Ariṭṭho ca subhogo ca,",
"ja543:87.4": "padhāviṃsu anantarā.",
"ja543:88.1": "“Amma assāsa mā soci,",
"ja543:88.2": "evaṃdhammā hi pāṇino;",
"ja543:88.3": "Cavanti upapajjanti,",
"ja543:88.4": "esassa pariṇāmitā”.",
"ja543:89.1": "“Ahampi tāta jānāmi,",
"ja543:89.2": "evaṃdhammā hi pāṇino;",
"ja543:89.3": "Sokena ca paretasmi,",
"ja543:89.4": "bhūridattaṃ apassatī.",
"ja543:90.1": "Ajja ce me imaṃ rattiṃ,",
"ja543:90.2": "sudassana vijānahi;",
"ja543:90.3": "Bhūridattaṃ apassantī,",
"ja543:90.4": "maññe hissāmi jīvitaṃ”.",
"ja543:91.1": "“Amma assāsa mā soci,",
"ja543:91.2": "ānayissāma bhātaraṃ;",
"ja543:91.3": "Disodisaṃ gamissāma,",
"ja543:91.4": "bhātupariyesanaṃ caraṃ.",
"ja543:92.1": "Pabbate giriduggesu,",
"ja543:92.2": "gāmesu nigamesu ca;",
"ja543:92.3": "Orena sattarattassa,",
"ja543:92.4": "bhātaraṃ passa āgataṃ”.",
"ja543:93.1": "“Hatthā pamutto urago,",
"ja543:93.2": "pāde te nipatī bhusaṃ;",
"ja543:93.3": "Kacci nu taṃ ḍaṃsī tāta,",
"ja543:93.4": "mā bhāyi sukhito bhava”.",
"ja543:94.1": "“Neva mayhaṃ ayaṃ nāgo,",
"ja543:94.2": "alaṃ dukkhāya kāyaci;",
"ja543:94.3": "Yāvatatthi ahiggāho,",
"ja543:94.4": "mayā bhiyyo na vijjati”.",
"ja543:95.1": "“Ko nu brāhmaṇavaṇṇena,",
"ja543:95.2": "ditto parisamāgato;",
"ja543:95.3": "Avhāyantu suyuddhena,",
"ja543:95.4": "suṇantu parisā mama”.",
"ja543:96.1": "“Tvaṃ maṃ nāgena ālampa,",
"ja543:96.2": "ahaṃ maṇḍūkachāpiyā;",
"ja543:96.3": "Hotu no abbhutaṃ tattha,",
"ja543:96.4": "ā sahassehi pañcahi”.",
"ja543:97.1": "“Ahañhi vasumā aḍḍho,",
"ja543:97.2": "tvaṃ daliddosi māṇava;",
"ja543:97.3": "Ko nu te pāṭibhogatthi,",
"ja543:97.4": "upajūtañca kiṃ siyā.",
"ja543:98.1": "Upajūtañca me assa,",
"ja543:98.2": "pāṭibhogo ca tādiso;",
"ja543:98.3": "Hotu no abbhutaṃ tattha,",
"ja543:98.4": "ā sahassehi pañcahi”.",
"ja543:99.1": "“Suṇohi me mahārāja,",
"ja543:99.2": "vacanaṃ bhaddamatthu te;",
"ja543:99.3": "Pañcannaṃ me sahassānaṃ,",
"ja543:99.4": "pāṭibhogo hi kittima”.",
"ja543:100.1": "“Pettikaṃ vā iṇaṃ hoti,",
"ja543:100.2": "Yaṃ vā hoti sayaṃkataṃ;",
"ja543:100.3": "Kiṃ tvaṃ evaṃ bahuṃ mayhaṃ,",
"ja543:100.4": "Dhanaṃ yācasi brāhmaṇa”.",
"ja543:101.1": "“Alampāno hi nāgena,",
"ja543:101.2": "mamaṃ abhijigīsati;",
"ja543:101.3": "Ahaṃ maṇḍūkachāpiyā,",
"ja543:101.4": "ḍaṃsayissāmi brāhmaṇaṃ.",
"ja543:102.1": "Taṃ tvaṃ daṭṭhuṃ mahārāja,",
"ja543:102.2": "ajja raṭṭhābhivaḍḍhana;",
"ja543:102.3": "Khattasaṃghaparibyūḷho,",
"ja543:102.4": "niyyāhi ahidassanaṃ”.",
"ja543:103.1": "“Neva taṃ atimaññāmi,",
"ja543:103.2": "sippavādena māṇava;",
"ja543:103.3": "Atimattosi sippena,",
"ja543:103.4": "uragaṃ nāpacāyasi”.",
"ja543:104.1": "“Ahampi nātimaññāmi,",
"ja543:104.2": "sippavādena brāhmaṇa;",
"ja543:104.3": "Avisena ca nāgena,",
"ja543:104.4": "bhusaṃ vañcayase janaṃ.",
"ja543:105.1": "Evañcetaṃ jano jaññā,",
"ja543:105.2": "Yathā jānāmi taṃ ahaṃ;",
"ja543:105.3": "Na tvaṃ labhasi ālampa,",
"ja543:105.4": "Bhusamuṭṭhiṃ kuto dhanaṃ”.",
"ja543:106.1": "“Kharājino jaṭī dummī,",
"ja543:106.2": "ditto parisamāgato;",
"ja543:106.3": "Yo tvaṃ evaṃ gataṃ nāgaṃ,",
"ja543:106.4": "aviso atimaññasi.",
"ja543:107.1": "Āsajja kho naṃ jaññāsi,",
"ja543:107.2": "puṇṇaṃ uggassa tejaso;",
"ja543:107.3": "Maññe taṃ bhasmarāsiṃva,",
"ja543:107.4": "khippameso karissati”.",
"ja543:108.1": "“Siyā visaṃ siluttassa,",
"ja543:108.2": "deḍḍubhassa silābhuno;",
"ja543:108.3": "Neva lohitasīsassa,",
"ja543:108.4": "visaṃ nāgassa vijjati”.",
"ja543:109.1": "“Sutametaṃ arahataṃ,",
"ja543:109.2": "saññatānaṃ tapassinaṃ;",
"ja543:109.3": "Idha dānāni datvāna,",
"ja543:109.4": "saggaṃ gacchanti dāyakā;",
"ja543:109.5": "Jīvanto dehi dānāni,",
"ja543:109.6": "yadi te atthi dātave.",
"ja543:110.1": "Ayaṃ nāgo mahiddhiko,",
"ja543:110.2": "tejassī duratikkamo;",
"ja543:110.3": "Tena taṃ ḍaṃsayissāmi,",
"ja543:110.4": "so taṃ bhasmaṃ karissati”.",
"ja543:111.1": "“Mayāpetaṃ sutaṃ samma,",
"ja543:111.2": "saññatānaṃ tapassinaṃ;",
"ja543:111.3": "Idha dānāni datvāna,",
"ja543:111.4": "saggaṃ gacchanti dāyakā;",
"ja543:111.5": "Tvameva dehi jīvanto,",
"ja543:111.6": "yadi te atthi dātave.",
"ja543:112.1": "Ayaṃ ajamukhī nāma,",
"ja543:112.2": "puṇṇā uggassa tejaso;",
"ja543:112.3": "Tāya taṃ ḍaṃsayissāmi,",
"ja543:112.4": "sā taṃ bhasmaṃ karissati.",
"ja543:113.1": "Yā dhītā dhataraṭṭhassa,",
"ja543:113.2": "vemātā bhaginī mama;",
"ja543:113.3": "Sā taṃ ḍaṃsatvajamukhī,",
"ja543:113.4": "puṇṇā uggassa tejaso.",
"ja543:114.1": "Chamāyañce nisiñcissaṃ,",
"ja543:114.2": "brahmadatta vijānahi;",
"ja543:114.3": "Tiṇalatāni osadhyo,",
"ja543:114.4": "ussusseyyuṃ asaṃsayaṃ.",
"ja543:115.1": "Uddhañce pātayissāmi,",
"ja543:115.2": "brahmadatta vijānahi;",
"ja543:115.3": "Satta vassāniyaṃ devo,",
"ja543:115.4": "na vasse na himaṃ pate.",
"ja543:116.1": "Udake ce nisiñcissaṃ,",
"ja543:116.2": "brahmadatta vijānahi;",
"ja543:116.3": "Yāvantodakajā pāṇā,",
"ja543:116.4": "mareyyuṃ macchakacchapā”.",
"ja543:117.1": "()",
"ja543:118.1": "“Lokyaṃ sajantaṃ udakaṃ,",
"ja543:118.2": "payāgasmiṃ patiṭṭhitaṃ;",
"ja543:118.3": "Komaṃ ajjhoharī bhūto,",
"ja543:118.4": "ogāḷhaṃ yamunaṃ nadiṃ”.",
"ja543:119.1": "“Yadesa lokādhipatī yasassī,",
"ja543:119.2": "Bārāṇasiṃ pakriya samantato;",
"ja543:119.3": "Tassāha putto uragūsabhassa,",
"ja543:119.4": "Subhogoti maṃ brāhmaṇa vedayanti”.",
"ja543:120.1": "“Sace hi putto uragūsabhassa,",
"ja543:120.2": "Kāsissa rañño amarādhipassa;",
"ja543:120.3": "Mahesakkho aññataro pitā te,",
"ja543:120.4": "Maccesu mātā pana te atulyā;",
"ja543:120.5": "Na tādiso arahati brāhmaṇassa,",
"ja543:120.6": "Dāsampi ohārituṃ mahānubhāvo”.",
"ja543:121.1": "“Rukkhaṃ nissāya vijjhittho,",
"ja543:121.2": "eṇeyyaṃ pātumāgataṃ;",
"ja543:121.3": "So viddho dūramacari,",
"ja543:121.4": "saravegena sīghavā.",
"ja543:122.1": "Taṃ tvaṃ patitamaddakkhi,",
"ja543:122.2": "araññasmiṃ brahāvane;",
"ja543:122.3": "Sa maṃsakājamādāya,",
"ja543:122.4": "sāyaṃ nigrodhupāgami.",
"ja543:123.1": "Sukasāḷikasaṅghuṭṭhaṃ,",
"ja543:123.2": "piṅgalaṃ santhatāyutaṃ;",
"ja543:123.3": "Kokilābhirudaṃ rammaṃ,",
"ja543:123.4": "dhuvaṃ haritasaddalaṃ.",
"ja543:124.1": "Tattha te so pāturahu,",
"ja543:124.2": "iddhiyā yasasā jalaṃ;",
"ja543:124.3": "Mahānubhāvo bhātā me,",
"ja543:124.4": "kaññāhi parivārito.",
"ja543:125.1": "So tena pariciṇṇo tvaṃ,",
"ja543:125.2": "sabbakāmehi tappito;",
"ja543:125.3": "Aduṭṭhassa tuvaṃ dubbhi,",
"ja543:125.4": "taṃ te veraṃ idhāgataṃ.",
"ja543:126.1": "Khippaṃ gīvaṃ pasārehi,",
"ja543:126.2": "na te dassāmi jīvitaṃ;",
"ja543:126.3": "Bhātu parisaraṃ veraṃ,",
"ja543:126.4": "chedayissāmi te siraṃ”.",
"ja543:127.1": "“Ajjhāyako yācayogī,",
"ja543:127.2": "āhutaggi ca brāhmaṇo;",
"ja543:127.3": "Etehi tīhi ṭhānehi,",
"ja543:127.4": "avajjho hoti brāhmaṇo”.",
"ja543:128.1": "“Yaṃ pūraṃ dhataraṭṭhassa,",
"ja543:128.2": "ogāḷhaṃ yamunaṃ nadiṃ;",
"ja543:128.3": "Jotate sabbasovaṇṇaṃ,",
"ja543:128.4": "girimāhacca yāmunaṃ.",
"ja543:129.1": "Tattha te purisabyagghā,",
"ja543:129.2": "sodariyā mama bhātaro;",
"ja543:129.3": "Yathā te tattha vakkhanti,",
"ja543:129.4": "tathā hessasi brāhmaṇa”.",
"ja543:130.1": "()",
"ja543:131.1": "“Anittarā ittarasampayuttā,",
"ja543:131.2": "Yaññā ca vedā ca subhoga loke;",
"ja543:131.3": "Tadaggarayhañhi vinindamāno,",
"ja543:131.4": "Jahāti vittañca satañca dhammaṃ.",
"ja543:132.1": "Ajjhenamariyā pathaviṃ janindā,",
"ja543:132.2": "Vessā kasiṃ pāricariyañca suddā;",
"ja543:132.3": "Upāgu paccekaṃ yathāpadesaṃ,",
"ja543:132.4": "Katāhu ete vasināti āhu.",
"ja543:133.1": "Dhātā vidhātā varuṇo kuvero,",
"ja543:133.2": "Somo yamo candimā vāyu sūriyo;",
"ja543:133.3": "Etepi yaññaṃ puthuso yajitvā,",
"ja543:133.4": "Ajjhāyakānaṃ atho sabbakāme.",
"ja543:134.1": "Vikāsitā cāpasatāni pañca,",
"ja543:134.2": "Yo ajjuno balavā bhīmaseno;",
"ja543:134.3": "Sahassabāhu asamo pathabyā,",
"ja543:134.4": "Sopi tadā mādahi jātavedaṃ.",
"ja543:135.1": "Yo brāhmaṇe bhojayi dīgharattaṃ,",
"ja543:135.2": "Annena pānena yathānubhāvaṃ;",
"ja543:135.3": "Pasannacitto anumodamāno,",
"ja543:135.4": "Subhoga devaññataro ahosi.",
"ja543:136.1": "Mahāsanaṃ devamanomavaṇṇaṃ,",
"ja543:136.2": "Yo sappinā asakkhi bhojetumaggiṃ;",
"ja543:136.3": "Sa yaññatantaṃ varato yajitvā,",
"ja543:136.4": "Dibbaṃ gatiṃ mucalindajjhagacchi.",
"ja543:137.1": "Mahānubhāvo vassasahassajīvī,",
"ja543:137.2": "Yo pabbajī dassaneyyo uḷāro;",
"ja543:137.3": "Hitvā apariyanta raṭṭhaṃ sasenaṃ,",
"ja543:137.4": "Rājā dudīpopi jagāma saggaṃ.",
"ja543:138.1": "Yo sāgarantaṃ sāgaro vijitvā,",
"ja543:138.2": "Yūpaṃ subhaṃ soṇṇamayaṃ uḷāraṃ;",
"ja543:138.3": "Ussesi vessānaramādahāno,",
"ja543:138.4": "Subhoga devaññataro ahosi.",
"ja543:139.1": "Yassānubhāvena subhoga gaṅgā,",
"ja543:139.2": "Pavattatha dadhisannisinnaṃ samuddaṃ;",
"ja543:139.3": "Salomapādo paricariya maggiṃ,",
"ja543:139.4": "Aṅgo sahassakkhapurajjhagacchi.",
"ja543:140.1": "Mahiddhiko devavaro yasassī,",
"ja543:140.2": "Senāpati tidive vāsavassa;",
"ja543:140.3": "So somayāgena malaṃ vihantvā,",
"ja543:140.4": "Subhoga devaññataro ahosi.",
"ja543:141.1": "Akārayi lokamimaṃ parañca,",
"ja543:141.2": "Bhāgīrathiṃ himavantañca gijjhaṃ;",
"ja543:141.3": "Yo iddhimā devavaro yasassī,",
"ja543:141.4": "Sopi tadā ādahi jātavedaṃ.",
"ja543:142.1": "Mālāgirī himavā yo ca gijjho,",
"ja543:142.2": "Sudassano nisabho kuveru;",
"ja543:142.3": "Ete ca aññe ca nagā mahantā,",
"ja543:142.4": "Cityā katā yaññakarehi māhu.",
"ja543:143.1": "Ajjhāyakaṃ mantaguṇūpapannaṃ,",
"ja543:143.2": "Tapassinaṃ yācayogotidhāhu;",
"ja543:143.3": "Tīre samuddassudakaṃ sajantaṃ,",
"ja543:143.4": "Taṃ sāgarojjhohari tenapeyyo.",
"ja543:144.1": "Āyāgavatthūni puthū pathabyā,",
"ja543:144.2": "Saṃvijjanti brāhmaṇā vāsavassa;",
"ja543:144.3": "Purimaṃ disaṃ pacchimaṃ dakkhiṇuttaraṃ,",
"ja543:144.4": "Saṃvijjamānā janayanti vedaṃ”.",
"ja543:145.1": "“Kalī hi dhīrāna kaṭaṃ magānaṃ,",
"ja543:145.2": "Bhavanti vedajjhagatānariṭṭha;",
"ja543:145.3": "Marīcidhammaṃ asamekkhitattā,",
"ja543:145.4": "Māyāguṇā nātivahanti paññaṃ.",
"ja543:146.1": "Vedā na tāṇāya bhavanti dassa,",
"ja543:146.2": "Mittadduno bhūnahuno narassa;",
"ja543:146.3": "Na tāyate pariciṇṇo ca aggi,",
"ja543:146.4": "Dosantaraṃ maccamanariyakammaṃ.",
"ja543:147.1": "Sabbañca maccā sadhanaṃ sabhogaṃ,",
"ja543:147.2": "Ādīpitaṃ dāru tiṇena missaṃ;",
"ja543:147.3": "Dahaṃ na tappe asamatthatejo,",
"ja543:147.4": "Ko taṃ subhikkhaṃ dvirasaññu kayirā.",
"ja543:148.1": "Yathāpi khīraṃ vipariṇāmadhammaṃ,",
"ja543:148.2": "Dadhi bhavitvā navanītampi hoti;",
"ja543:148.3": "Evampi aggi vipariṇāmadhammo,",
"ja543:148.4": "Tejo samorohatī yogayutto.",
"ja543:149.1": "Na dissatī aggimanuppaviṭṭho,",
"ja543:149.2": "Sukkhesu kaṭṭhesu navesu cāpi;",
"ja543:149.3": "Nāmatthamāno araṇīnarena,",
"ja543:149.4": "Nākammunā jāyati jātavedo.",
"ja543:150.1": "Sace hi aggi antarato vaseyya,",
"ja543:150.2": "Sukkhesu kaṭṭhesu navesu cāpi;",
"ja543:150.3": "Sabbāni susseyyu vanāni loke,",
"ja543:150.4": "Sukkhāni kaṭṭhāni ca pajjaleyyuṃ.",
"ja543:151.1": "Karoti ce dārutiṇena puññaṃ,",
"ja543:151.2": "Bhojaṃ naro dhūmasikhiṃ patāpavaṃ;",
"ja543:151.3": "Aṅgārikā loṇakarā ca sūdā,",
"ja543:151.4": "Sarīradāhāpi kareyyu puññaṃ.",
"ja543:152.1": "Atha ce hi ete na karonti puññaṃ,",
"ja543:152.2": "Ajjhenamaggiṃ idha tappayitvā;",
"ja543:152.3": "Na koci lokasmiṃ karoti puññaṃ,",
"ja543:152.4": "Bhojaṃ naro dhūmasikhiṃ patāpavaṃ.",
"ja543:153.1": "Kathañhi lokāpacito samāno,",
"ja543:153.2": "Amanuññagandhaṃ bahūnaṃ akantaṃ;",
"ja543:153.3": "Yadeva maccā parivajjayanti,",
"ja543:153.4": "Tadappasatthaṃ dvirasaññu bhuñje.",
"ja543:154.1": "Sikhimpi devesu vadanti heke,",
"ja543:154.2": "Āpaṃ milakkhū pana devamāhu;",
"ja543:154.3": "Sabbeva ete vitathaṃ bhaṇanti,",
"ja543:154.4": "Aggī na devaññataro na cāpo.",
"ja543:155.1": "Anindriyabaddhamasaññakāyaṃ,",
"ja543:155.2": "Vessānaraṃ kammakaraṃ pajānaṃ;",
"ja543:155.3": "Paricariya maggiṃ sugatiṃ kathaṃ vaje,",
"ja543:155.4": "Pāpāni kammāni pakubbamāno.",
"ja543:156.1": "Sabbābhibhū tāhudha jīvikatthā,",
"ja543:156.2": "Aggissa brahmā paricārakoti;",
"ja543:156.3": "Sabbānubhāvī ca vasī kimatthaṃ,",
"ja543:156.4": "Animmito nimmitaṃ vanditassa.",
"ja543:157.1": "Hassaṃ anijjhānakhamaṃ atacchaṃ,",
"ja543:157.2": "Sakkārahetu pakiriṃsu pubbe;",
"ja543:157.3": "Te lābhasakkāre apātubhonte,",
"ja543:157.4": "Sandhāpitā jantubhi santidhammaṃ.",
"ja543:158.1": "Ajjhenamariyā pathaviṃ janindā,",
"ja543:158.2": "Vessā kasiṃ pāricariyañca suddā;",
"ja543:158.3": "Upāgu paccekaṃ yathāpadesaṃ,",
"ja543:158.4": "Katāhu ete vasināti āhu.",
"ja543:159.1": "Etañca saccaṃ vacanaṃ bhaveyya,",
"ja543:159.2": "Yathā idaṃ bhāsitaṃ brāhmaṇehi;",
"ja543:159.3": "Nākhattiyo jātu labhetha rajjaṃ,",
"ja543:159.4": "Nābrāhmaṇo mantapadāni sikkhe;",
"ja543:159.5": "Nāññatra vessehi kasiṃ kareyya,",
"ja543:159.6": "Suddo na mucce parapesanāya.",
"ja543:160.1": "Yasmā ca etaṃ vacanaṃ abhūtaṃ,",
"ja543:160.2": "Musāvime odariyā bhaṇanti;",
"ja543:160.3": "Tadappapaññā abhisaddahanti,",
"ja543:160.4": "Passanti taṃ paṇḍitā attanāva.",
"ja543:161.1": "Khatyā hi vessānaṃ baliṃ haranti,",
"ja543:161.2": "Ādāya satthāni caranti brāhmaṇā;",
"ja543:161.3": "Taṃ tādisaṃ saṅkhubhitaṃ pabhinnaṃ,",
"ja543:161.4": "Kasmā brahmā nujju karoti lokaṃ.",
"ja543:162.1": "Sace hi so issaro sabbaloke,",
"ja543:162.2": "Brahmā bahūbhūtapatī pajānaṃ;",
"ja543:162.3": "Kiṃ sabbalokaṃ vidahī alakkhiṃ,",
"ja543:162.4": "Kiṃ sabbalokaṃ na sukhiṃ akāsi.",
"ja543:163.1": "Sace hi so issaro sabbaloke,",
"ja543:163.2": "Brahmā bahūbhūtapatī pajānaṃ;",
"ja543:163.3": "Māyā musāvajjamadena cāpi,",
"ja543:163.4": "Lokaṃ adhammena kimatthamakāri.",
"ja543:164.1": "Sace hi so issaro sabbaloke,",
"ja543:164.2": "Brahmā bahūbhūtapatī pajānaṃ;",
"ja543:164.3": "Adhammiko bhūtapatī ariṭṭha,",
"ja543:164.4": "Dhamme sati yo vidahī adhammaṃ.",
"ja543:165.1": "Kīṭā paṭaṅgā uragā ca bhekā,",
"ja543:165.2": "Hantvā kimī sujjhati makkhikā ca;",
"ja543:165.3": "Etepi dhammā anariyarūpā,",
"ja543:165.4": "Kambojakānaṃ vitathā bahūnaṃ.",
"ja543:166.1": "Sace hi so sujjhati yo hanāti,",
"ja543:166.2": "Hatopi so saggamupeti ṭhānaṃ;",
"ja543:166.3": "Bhovādi bhovādina mārayeyyuṃ,",
"ja543:166.4": "Ye cāpi tesaṃ abhisaddaheyyuṃ.",
"ja543:167.1": "Neva migā na pasū nopi gāvo,",
"ja543:167.2": "Āyācanti attavadhāya keci;",
"ja543:167.3": "Vipphandamāne idha jīvikatthā,",
"ja543:167.4": "Yaññesu pāṇe pasumārabhanti.",
"ja543:168.1": "Yūpussane pasubandhe ca bālā,",
"ja543:168.2": "Cittehi vaṇṇehi mukhaṃ nayanti;",
"ja543:168.3": "Ayaṃ te yūpo kāmaduho parattha,",
"ja543:168.4": "Bhavissati sassato samparāye.",
"ja543:169.1": "Sace ca yūpe maṇisaṅkhamuttaṃ,",
"ja543:169.2": "Dhaññaṃ dhanaṃ rajataṃ jātarūpaṃ;",
"ja543:169.3": "Sukkhesu kaṭṭhesu navesu cāpi,",
"ja543:169.4": "Sace duhe tidive sabbakāme;",
"ja543:169.5": "Tevijjasaṅghāva puthū yajeyyuṃ,",
"ja543:169.6": "Abrāhmaṇaṃ kañci na yājayeyyuṃ.",
"ja543:170.1": "Kuto ca yūpe maṇisaṅkhamuttaṃ,",
"ja543:170.2": "Dhaññaṃ dhanaṃ rajataṃ jātarūpaṃ;",
"ja543:170.3": "Sukkhesu kaṭṭhesu navesu cāpi,",
"ja543:170.4": "Kuto duhe tidive sabbakāme.",
"ja543:171.1": "Saṭhā ca luddā ca paluddhabālā,",
"ja543:171.2": "Cittehi vaṇṇehi mukhaṃ nayanti;",
"ja543:171.3": "Ādāya aggiṃ mama dehi vittaṃ,",
"ja543:171.4": "Tato sukhī hohisi sabbakāme.",
"ja543:172.1": "Tamaggihuttaṃ saraṇaṃ pavissa,",
"ja543:172.2": "Cittehi vaṇṇehi mukhaṃ nayanti;",
"ja543:172.3": "Oropayitvā kesamassuṃ nakhañca,",
"ja543:172.4": "Vedehi vittaṃ atigāḷhayanti.",
"ja543:173.1": "Kākā ulūkaṃva raho labhitvā,",
"ja543:173.2": "Ekaṃ samānaṃ bahukā samecca;",
"ja543:173.3": "Annāni bhutvā kuhakā kuhitvā,",
"ja543:173.4": "Muṇḍaṃ karitvā yaññapathossajanti.",
"ja543:174.1": "Evañhi so vañcito brāhmaṇehi,",
"ja543:174.2": "Eko samāno bahukā samecca;",
"ja543:174.3": "Te yogayogena vilumpamānā,",
"ja543:174.4": "Diṭṭhaṃ adiṭṭhena dhanaṃ haranti.",
"ja543:175.1": "Akāsiyā rājūhivānusiṭṭhā,",
"ja543:175.2": "Tadassa ādāya dhanaṃ haranti;",
"ja543:175.3": "Te tādisā corasamā asantā,",
"ja543:175.4": "Vajjhā na haññanti ariṭṭha loke.",
"ja543:176.1": "Indassa bāhārasi dakkhiṇāti,",
"ja543:176.2": "Yaññesu chindanti palāsayaṭṭhiṃ;",
"ja543:176.3": "Tañcepi saccaṃ maghavā chinnabāhu,",
"ja543:176.4": "Kenassa indo asure jināti.",
"ja543:177.1": "Tañceva tucchaṃ maghavā samaṅgī,",
"ja543:177.2": "Hantā avajjho paramo sa devo;",
"ja543:177.3": "Mantā ime brāhmaṇā tuccharūpā,",
"ja543:177.4": "Sandiṭṭhikā vañcanā esa loke.",
"ja543:178.1": "Mālāgiri himavā yo ca gijjho,",
"ja543:178.2": "Sudassano nisabho kuveru;",
"ja543:178.3": "Ete ca aññe ca nagā mahantā,",
"ja543:178.4": "Cityā katā yaññakarehi māhu.",
"ja543:179.1": "Yathāpakārāni hi iṭṭhakāni,",
"ja543:179.2": "Cityā katā yaññakarehi māhu;",
"ja543:179.3": "Na pabbatā honti tathāpakārā,",
"ja543:179.4": "Aññā disā acalā tiṭṭhaselā.",
"ja543:180.1": "Na iṭṭhakā honti silā cirena,",
"ja543:180.2": "Na tattha sañjāyati ayo na lohaṃ;",
"ja543:180.3": "Yaññañca etaṃ parivaṇṇayantā,",
"ja543:180.4": "Cityā katā yaññakarehi māhu.",
"ja543:181.1": "Ajjhāyakaṃ mantaguṇūpapannaṃ,",
"ja543:181.2": "Tapassinaṃ yācayogotidhāhu;",
"ja543:181.3": "Tīre samuddassudakaṃ sajantaṃ,",
"ja543:181.4": "Taṃ sāgarojjhohari tenapeyyo.",
"ja543:182.1": "Parosahassampi samantavede,",
"ja543:182.2": "Mantūpapanne nadiyo vahanti;",
"ja543:182.3": "Na tena byāpannarasūdakā na,",
"ja543:182.4": "Kasmā samuddo atulo apeyyo.",
"ja543:183.1": "Ye keci kūpā idha jīvaloke,",
"ja543:183.2": "Loṇūdakā kūpakhaṇehi khātā;",
"ja543:183.3": "Na brāhmaṇajjhoharaṇena tesu,",
"ja543:183.4": "Āpo apeyyo dvirasaññu māhu.",
"ja543:184.1": "Pure puratthā kā kassa bhariyā,",
"ja543:184.2": "Mano manussaṃ ajanesi pubbe;",
"ja543:184.3": "Tenāpi dhammena na koci hīno,",
"ja543:184.4": "Evampi vosaggavibhaṅgamāhu.",
"ja543:185.1": "Caṇḍālaputtopi adhicca vede,",
"ja543:185.2": "Bhāseyya mante kusalo matīmā;",
"ja543:185.3": "Na tassa muddhāpi phaleyya sattadhā,",
"ja543:185.4": "Mantā ime attavadhāya katā.",
"ja543:186.1": "Vācākatā giddhikatā gahītā,",
"ja543:186.2": "Dummocayā kabyapathānupannā;",
"ja543:186.3": "Bālāna cittaṃ visame niviṭṭhaṃ,",
"ja543:186.4": "Tadappapaññā abhisaddahanti.",
"ja543:187.1": "Sīhassa byagghassa ca dīpino ca,",
"ja543:187.2": "Na vijjatī porisiyaṃ balena;",
"ja543:187.3": "Manussabhāvo ca gavaṃva pekkho,",
"ja543:187.4": "Jātī hi tesaṃ asamā samānā.",
"ja543:188.1": "Sace ca rājā pathaviṃ vijitvā,",
"ja543:188.2": "Sajīvavā assavapārisajjo;",
"ja543:188.3": "Sayameva so sattusaṅghaṃ vijeyya,",
"ja543:188.4": "Tassappajā niccasukhī bhaveyya.",
"ja543:189.1": "Khattiyamantā ca tayo ca vedā,",
"ja543:189.2": "Atthena ete samakā bhavanti;",
"ja543:189.3": "Tesañca atthaṃ avinicchinitvā,",
"ja543:189.4": "Na bujjhatī oghapathaṃva channaṃ.",
"ja543:190.1": "Khattiyamantā ca tayo ca vedā,",
"ja543:190.2": "Atthena ete samakā bhavanti;",
"ja543:190.3": "Lābho alābho ayaso yaso ca,",
"ja543:190.4": "Sabbeva tesaṃ catunnañca dhammā.",
"ja543:191.1": "Yathāpi ibbhā dhanadhaññahetu,",
"ja543:191.2": "Kammāni karonti puthū pathabyā;",
"ja543:191.3": "Tevijjasaṅghā ca tatheva ajja,",
"ja543:191.4": "Kammāni karonti puthū pathabyā.",
"ja543:192.1": "Ibbhehi ye te samakā bhavanti,",
"ja543:192.2": "Niccussukā kāmaguṇesu yuttā;",
"ja543:192.3": "Kammāni karonti puthū pathabyā,",
"ja543:192.4": "Tadappapaññā dvirasaññurā te”.",
"ja543:193.1": "()",
"ja543:194.1": "“Kassa bherī mudiṅgā ca,",
"ja543:194.2": "saṅkhāpaṇavadindimā;",
"ja543:194.3": "Purato paṭipannāni,",
"ja543:194.4": "hāsayantā rathesabhaṃ.",
"ja543:195.1": "Kassa kañcanapaṭṭena,",
"ja543:195.2": "puthunā vijjuvaṇṇinā;",
"ja543:195.3": "Yuvā kalāpasannaddho,",
"ja543:195.4": "ko eti siriyā jalaṃ.",
"ja543:196.1": "Ukkāmukhapahaṭṭhaṃva,",
"ja543:196.2": "khadiraṅgārasannibhaṃ;",
"ja543:196.3": "Mukhañca rucirā bhāti,",
"ja543:196.4": "ko eti siriyā jalaṃ.",
"ja543:197.1": "Kassa jambonadaṃ chattaṃ,",
"ja543:197.2": "sasalākaṃ manoramaṃ;",
"ja543:197.3": "Ādiccaraṃsāvaraṇaṃ,",
"ja543:197.4": "ko eti siriyā jalaṃ.",
"ja543:198.1": "Kassa aṅgaṃ pariggayha,",
"ja543:198.2": "vālabījanimuttamaṃ;",
"ja543:198.3": "Ubhato varapuññassa,",
"ja543:198.4": "muddhani uparūpari.",
"ja543:199.1": "Kassa pekhuṇahatthāni,",
"ja543:199.2": "citrāni ca mudūni ca;",
"ja543:199.3": "Kañcanamaṇidaṇḍāni,",
"ja543:199.4": "caranti dubhato mukhaṃ.",
"ja543:200.1": "Khadiraṅgāravaṇṇābhā,",
"ja543:200.2": "ukkāmukhapahaṃsitā;",
"ja543:200.3": "Kassete kuṇḍalā vaggū,",
"ja543:200.4": "sobhanti dubhato mukhaṃ.",
"ja543:201.1": "Kassa vātena chupitā,",
"ja543:201.2": "niddhantā mudukāḷakā;",
"ja543:201.3": "Sobhayanti nalāṭantaṃ,",
"ja543:201.4": "nabhā vijjurivuggatā.",
"ja543:202.1": "Kassa etāni akkhīni,",
"ja543:202.2": "āyatāni puthūni ca;",
"ja543:202.3": "Ko sobhati visālakkho,",
"ja543:202.4": "kassetaṃ uṇṇajaṃ mukhaṃ.",
"ja543:203.1": "Kassete lapanajātā,",
"ja543:203.2": "suddhā saṅkhavarūpamā;",
"ja543:203.3": "Bhāsamānassa sobhanti,",
"ja543:203.4": "dantā kuppilasādisā.",
"ja543:204.1": "Kassa lākhārasasamā,",
"ja543:204.2": "hatthapādā sukhedhitā;",
"ja543:204.3": "Ko so bimboṭṭhasampanno,",
"ja543:204.4": "divā sūriyova bhāsati.",
"ja543:205.1": "Himaccaye himavati,",
"ja543:205.2": "mahāsālova pupphito;",
"ja543:205.3": "Ko so odātapāvāro,",
"ja543:205.4": "jayaṃ indova sobhati.",
"ja543:206.1": "Suvaṇṇapīḷakākiṇṇaṃ,",
"ja543:206.2": "maṇidaṇḍavicittakaṃ;",
"ja543:206.3": "Ko so parisamogayha,",
"ja543:206.4": "īsaṃ khaggaṃ pamuñcati.",
"ja543:207.1": "Suvaṇṇavikatā cittā,",
"ja543:207.2": "sukatā cittasibbanā;",
"ja543:207.3": "Ko so omuñcate pādā,",
"ja543:207.4": "namo katvā mahesino”.",
"ja543:208.1": "“Dhataraṭṭhā hi te nāgā,",
"ja543:208.2": "iddhimanto yasassino;",
"ja543:208.3": "Samuddajāya uppannā,",
"ja543:208.4": "nāgā ete mahiddhikā”ti.",
"ja543:209.1": "Bhūridattajātakaṃ chaṭṭhaṃ."
}