{
"ja508:1.1": "Jātaka",
"ja508:2.1": "Vīsatinipāta",
"ja508:3.1": "Mātaṅgavagga",
"ja508:4.1": "12. Pañcapaṇḍitajātaka",
"ja508:5.1": "“Pañca paṇḍitā samāgatāttha,",
"ja508:5.2": "Pañhā me paṭibhāti taṃ suṇātha;",
"ja508:5.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
"ja508:5.4": "Kassevāvikareyya guyhamatthaṃ”.",
"ja508:6.1": "“Tvaṃ āvikarohi bhūmipāla,",
"ja508:6.2": "Bhattā bhārasaho tuvaṃ vade taṃ;",
"ja508:6.3": "Tava chandarucīni sammasitvā,",
"ja508:6.4": "Atha vakkhanti janinda pañca dhīrā”.",
"ja508:7.1": "“Yā sīlavatī anaññatheyyā,",
"ja508:7.2": "Bhattucchandavasānugā manāpā;",
"ja508:7.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
"ja508:7.4": "Bhariyāyāvikareyya guyhamatthaṃ”.",
"ja508:8.1": "“Yo kicchagatassa āturassa,",
"ja508:8.2": "Saraṇaṃ hoti gatī parāyanañca;",
"ja508:8.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
"ja508:8.4": "Sakhino vāvikareyya guyhamatthaṃ”.",
"ja508:9.1": "“Jeṭṭho atha majjhimo kaniṭṭho,",
"ja508:9.2": "Yo ce sīlasamāhito ṭhitatto;",
"ja508:9.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
"ja508:9.4": "Bhātu vāvīkareyya guyhamatthaṃ”.",
"ja508:10.1": "“Yo ve pituhadayassa paddhagū,",
"ja508:10.2": "Anujāto pitaraṃ anomapañño;",
"ja508:10.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
"ja508:10.4": "Puttassāvikareyya guyhamatthaṃ”.",
"ja508:11.1": "“Mātā dvipadājanindaseṭṭha,",
"ja508:11.2": "Yā naṃ poseti chandasā piyena;",
"ja508:11.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
"ja508:11.4": "Mātuyāvīkareyya guyhamatthaṃ”.",
"ja508:12.1": "“Guyhassa hi guyhameva sādhu,",
"ja508:12.2": "Na hi guyhassa pasatthamāvikammaṃ;",
"ja508:12.3": "Anipphannatā saheyya dhīro,",
"ja508:12.4": "Nipphannova yathāsukhaṃ bhaṇeyya”.",
"ja508:13.1": "“Kiṃ tvaṃ vimanosi rājaseṭṭha,",
"ja508:13.2": "Dvipadajaninda vacanaṃ suṇoma metaṃ;",
"ja508:13.3": "Kiṃ cintayamāno dummanosi,",
"ja508:13.4": "Nūna deva aparādho atthi mayhaṃ”.",
"ja508:14.1": "“‘Paṇhe vajjho mahosadho’ti,",
"ja508:14.2": "Āṇatto me vadhāya bhūripañño;",
"ja508:14.3": "Taṃ cintayamāno dummanosmi,",
"ja508:14.4": "Na hi devī aparādho atthi tuyhaṃ”.",
"ja508:15.1": "“Abhidosagato dāni ehisi,",
"ja508:15.2": "Kiṃ sutvā kiṃ saṅkate mano te;",
"ja508:15.3": "Ko te kimavoca bhūripañña,",
"ja508:15.4": "Iṅgha vacanaṃ suṇoma brūhi metaṃ”.",
"ja508:16.1": "“‘Paṇhe vajjho mahosadho’ti,",
"ja508:16.2": "Yadi te mantayitaṃ janinda dosaṃ;",
"ja508:16.3": "Bhariyāya rahogato asaṃsi,",
"ja508:16.4": "Guyhaṃ pātukataṃ sutaṃ mametaṃ”.",
"ja508:17.1": "“Yaṃ sālavanasmiṃ senako,",
"ja508:17.2": "Pāpakammaṃ akāsi asabbhirūpaṃ;",
"ja508:17.3": "Sakhinova rahogato asaṃsi,",
"ja508:17.4": "Guyhaṃ pātukataṃ sutaṃ mametaṃ.",
"ja508:18.1": "Pukkusa purisassa te janinda,",
"ja508:18.2": "Uppanno rogo arājayutto;",
"ja508:18.3": "Bhātuñca rahogato asaṃsi,",
"ja508:18.4": "Guyhaṃ pātukataṃ sutaṃ mametaṃ.",
"ja508:19.1": "Ābādhoyaṃ asabbhirūpo,",
"ja508:19.2": "Kāmindo naradevena phuṭṭho;",
"ja508:19.3": "Puttassa rahogato asaṃsi,",
"ja508:19.4": "Guyhaṃ pātukataṃ sutaṃ mametaṃ.",
"ja508:20.1": "Aṭṭhavaṅkaṃ maṇiratanaṃ uḷāraṃ,",
"ja508:20.2": "Sakko te adadā pitāmahassa;",
"ja508:20.3": "Devindassa gataṃ tadajja hatthaṃ,",
"ja508:20.4": "Mātuñca rahogato asaṃsi;",
"ja508:20.5": "Guyhaṃ pātukataṃ sutaṃ mametaṃ.",
"ja508:21.1": "Guyhassa hi guyhameva sādhu,",
"ja508:21.2": "Na hi guyhassa pasatthamāvikammaṃ;",
"ja508:21.3": "Anipphannatā saheyya dhīro,",
"ja508:21.4": "Nipphannova yathāsukhaṃ bhaṇeyya.",
"ja508:22.1": "Na guyhamatthaṃ vivareyya,",
"ja508:22.2": "rakkheyya naṃ yathā nidhiṃ;",
"ja508:22.3": "Na hi pātukato sādhu,",
"ja508:22.4": "guyho attho pajānatā.",
"ja508:23.1": "Thiyā guyhaṃ na saṃseyya,",
"ja508:23.2": "amittassa ca paṇḍito;",
"ja508:23.3": "Yo cāmisena saṃhīro,",
"ja508:23.4": "hadayattheno ca yo naro.",
"ja508:24.1": "Guyhamatthaṃ asambuddhaṃ,",
"ja508:24.2": "sambodhayati yo naro;",
"ja508:24.3": "Mantabhedabhayā tassa,",
"ja508:24.4": "dāsabhūto titikkhati.",
"ja508:25.1": "Yāvanto purisassatthaṃ,",
"ja508:25.2": "guyhaṃ jānanti mantinaṃ;",
"ja508:25.3": "Tāvanto tassa ubbegā,",
"ja508:25.4": "tasmā guyhaṃ na vissaje.",
"ja508:26.1": "Vivicca bhāseyya divā rahassaṃ,",
"ja508:26.2": "Rattiṃ giraṃ nātivelaṃ pamuñce;",
"ja508:26.3": "Upassutikā hi suṇanti mantaṃ,",
"ja508:26.4": "Tasmā manto khippamupeti bhedan”ti.",
"ja508:27.1": "Pañcapaṇḍitajātakaṃ dvādasamaṃ."
}