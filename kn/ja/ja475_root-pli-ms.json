{
"ja475:1.1": "Jātaka",
"ja475:2.1": "Terasakanipāta",
"ja475:3.1": "Ambavagga",
"ja475:4.1": "2. Phandanajātaka",
"ja475:5.1": "“Kuṭhārihattho puriso,",
"ja475:5.2": "vanamogayha tiṭṭhasi;",
"ja475:5.3": "Puṭṭho me samma akkhāhi,",
"ja475:5.4": "kiṃ dāruṃ chetumicchasi”.",
"ja475:6.1": "“Isso vanāni carasi,",
"ja475:6.2": "samāni visamāni ca;",
"ja475:6.3": "Puṭṭho me samma akkhāhi,",
"ja475:6.4": "kiṃ dāruṃ nemiyā daḷhaṃ”.",
"ja475:7.1": "“Neva sālo na khadiro,",
"ja475:7.2": "nāssakaṇṇo kuto dhavo;",
"ja475:7.3": "Rukkho ca phandano nāma,",
"ja475:7.4": "taṃ dāruṃ nemiyā daḷhaṃ”.",
"ja475:8.1": "“Kīdisānissa pattāni,",
"ja475:8.2": "khandho vā pana kīdiso;",
"ja475:8.3": "Puṭṭho me samma akkhāhi,",
"ja475:8.4": "yathā jānemu phandanaṃ”.",
"ja475:9.1": "“Yassa sākhā palambanti,",
"ja475:9.2": "namanti na ca bhañjare;",
"ja475:9.3": "So rukkho phandano nāma,",
"ja475:9.4": "yassa mūle ahaṃ ṭhito.",
"ja475:10.1": "Arānaṃ cakkanābhīnaṃ,",
"ja475:10.2": "īsānemirathassa ca;",
"ja475:10.3": "Sabbassa te kammaniyo,",
"ja475:10.4": "ayaṃ hessati phandano”.",
"ja475:11.1": "“Iti phandanarukkhopi,",
"ja475:11.2": "tāvade ajjhabhāsatha;",
"ja475:11.3": "Mayhampi vacanaṃ atthi,",
"ja475:11.4": "bhāradvāja suṇohi me.",
"ja475:12.1": "Issassa upakkhandhamhā,",
"ja475:12.2": "Ukkacca caturaṅgulaṃ;",
"ja475:12.3": "Tena nemiṃ pasāresi,",
"ja475:12.4": "Evaṃ daḷhataraṃ siyā.",
"ja475:13.1": "Iti phandanarukkhopi,",
"ja475:13.2": "veraṃ appesi tāvade;",
"ja475:13.3": "Jātānañca ajātānaṃ,",
"ja475:13.4": "issānaṃ dukkhamāvahi.",
"ja475:14.1": "Iccevaṃ phandano issaṃ,",
"ja475:14.2": "isso ca pana phandanaṃ;",
"ja475:14.3": "Aññamaññaṃ vivādena,",
"ja475:14.4": "aññamaññamaghātayuṃ.",
"ja475:15.1": "Evameva manussānaṃ,",
"ja475:15.2": "vivādo yattha jāyati;",
"ja475:15.3": "Mayūranaccaṃ naccanti,",
"ja475:15.4": "yathā te issaphandanā.",
"ja475:16.1": "Taṃ vo vadāmi bhaddaṃ vo,",
"ja475:16.2": "yāvantettha samāgatā;",
"ja475:16.3": "Sammodatha mā vivadatha,",
"ja475:16.4": "mā hotha issaphandanā.",
"ja475:17.1": "Sāmaggimeva sikkhetha,",
"ja475:17.2": "buddhehetaṃ pasaṃsitaṃ;",
"ja475:17.3": "Sāmaggirato dhammaṭṭho,",
"ja475:17.4": "yogakkhemā na dhaṃsatī”ti.",
"ja475:18.1": "Phandanajātakaṃ dutiyaṃ."
}