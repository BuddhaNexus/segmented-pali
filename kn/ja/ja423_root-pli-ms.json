{
"ja423:1.1": "Jātaka",
"ja423:2.1": "Aṭṭhakanipāta",
"ja423:3.1": "Kaccānivagga",
"ja423:4.1": "7. Indriyajātaka",
"ja423:5.1": "“Yo indriyānaṃ kāmena,",
"ja423:5.2": "vasaṃ nārada gacchati;",
"ja423:5.3": "So pariccajjubho loke,",
"ja423:5.4": "jīvantova visussati.",
"ja423:6.1": "Sukhassānantaraṃ dukkhaṃ,",
"ja423:6.2": "dukkhassānantaraṃ sukhaṃ;",
"ja423:6.3": "Sosi patto sukhā dukkhaṃ,",
"ja423:6.4": "pāṭikaṅkha varaṃ sukhaṃ.",
"ja423:7.1": "Kicchakāle kicchasaho,",
"ja423:7.2": "yo kicchaṃ nātivattati;",
"ja423:7.3": "Sa kicchantaṃ sukhaṃ dhīro,",
"ja423:7.4": "yogaṃ samadhigacchati.",
"ja423:8.1": "Na heva kāmāna kāmā,",
"ja423:8.2": "nānatthā nātthakāraṇā;",
"ja423:8.3": "Na katañca niraṅkatvā,",
"ja423:8.4": "dhammā cavitumarahasi”.",
"ja423:9.1": "“Dakkhaṃ gahapatī sādhu,",
"ja423:9.2": "saṃvibhajjañca bhojanaṃ;",
"ja423:9.3": "Ahāso atthalābhesu,",
"ja423:9.4": "atthabyāpatti abyatho”.",
"ja423:10.1": "“Ettāvatetaṃ paṇḍiccaṃ,",
"ja423:10.2": "api so devilo bravi;",
"ja423:10.3": "Na yito kiñci pāpiyo,",
"ja423:10.4": "yo indriyānaṃ vasaṃ vaje”.",
"ja423:11.1": "“Amittānaṃva hatthatthaṃ,",
"ja423:11.2": "sivi pappoti māmiva;",
"ja423:11.3": "Kammaṃ vijjañca dakkheyyaṃ,",
"ja423:11.4": "vivāhaṃ sīlamaddavaṃ;",
"ja423:11.5": "Ete ca yase hāpetvā,",
"ja423:11.6": "nibbatto sehi kammehi.",
"ja423:12.1": "Sohaṃ sahassajīnova,",
"ja423:12.2": "abandhu aparāyaṇo;",
"ja423:12.3": "Ariyadhammā apakkanto,",
"ja423:12.4": "yathā peto tathevahaṃ.",
"ja423:13.1": "Sukhakāme dukkhāpetvā,",
"ja423:13.2": "āpannosmi padaṃ imaṃ;",
"ja423:13.3": "So sukhaṃ nādhigacchāmi,",
"ja423:13.4": "ṭhito bhāṇumatāmivā”ti.",
"ja423:14.1": "Indriyajātakaṃ sattamaṃ."
}