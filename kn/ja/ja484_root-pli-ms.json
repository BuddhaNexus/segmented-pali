{
"ja484:1.1": "Jātaka",
"ja484:2.1": "Pakiṇṇakanipāta",
"ja484:3.1": "Sālikedāravagga",
"ja484:4.1": "1. Sālikedārajātaka",
"ja484:5.1": "“Sampannaṃ sālikedāraṃ,",
"ja484:5.2": "suvā bhuñjanti kosiya;",
"ja484:5.3": "Paṭivedemi te brahme,",
"ja484:5.4": "na ne vāretumussahe.",
"ja484:6.1": "Eko ca tattha sakuṇo,",
"ja484:6.2": "yo nesaṃ sabbasundaro;",
"ja484:6.3": "Bhutvā sāliṃ yathākāmaṃ,",
"ja484:6.4": "tuṇḍenādāya gacchati”.",
"ja484:7.1": "“Oḍḍentu vāḷapāsāni,",
"ja484:7.2": "yathā bajjhetha so dijo;",
"ja484:7.3": "Jīvañca naṃ gahetvāna,",
"ja484:7.4": "ānayehi mamantike”.",
"ja484:8.1": "“Ete bhutvā pivitvā ca,",
"ja484:8.2": "pakkamanti vihaṅgamā;",
"ja484:8.3": "Eko baddhosmi pāsena,",
"ja484:8.4": "kiṃ pāpaṃ pakataṃ mayā”.",
"ja484:9.1": "“Udaraṃ nūna aññesaṃ,",
"ja484:9.2": "suva accodaraṃ tava;",
"ja484:9.3": "Bhutvā sāliṃ yathākāmaṃ,",
"ja484:9.4": "tuṇḍenādāya gacchasi.",
"ja484:10.1": "Koṭṭhaṃ nu tattha pūresi,",
"ja484:10.2": "suva veraṃ nu te mayā;",
"ja484:10.3": "Puṭṭho me samma akkhāhi,",
"ja484:10.4": "kuhiṃ sāliṃ nidāhasi”.",
"ja484:11.1": "“Na me veraṃ tayā saddhiṃ,",
"ja484:11.2": "koṭṭho mayhaṃ na vijjati;",
"ja484:11.3": "Iṇaṃ muñcāmiṇaṃ dammi,",
"ja484:11.4": "sampatto koṭasimbaliṃ;",
"ja484:11.5": "Nidhimpi tattha nidahāmi,",
"ja484:11.6": "evaṃ jānāhi kosiya”.",
"ja484:12.1": "“Kīdisaṃ te iṇadānaṃ,",
"ja484:12.2": "iṇamokkho ca kīdiso;",
"ja484:12.3": "Nidhinidhānamakkhāhi,",
"ja484:12.4": "atha pāsā pamokkhasi”.",
"ja484:13.1": "“Ajātapakkhā taruṇā,",
"ja484:13.2": "puttakā mayha kosiya;",
"ja484:13.3": "Te maṃ bhatā bharissanti,",
"ja484:13.4": "tasmā tesaṃ iṇaṃ dade.",
"ja484:14.1": "Mātā pitā ca me vuddhā,",
"ja484:14.2": "jiṇṇakā gatayobbanā;",
"ja484:14.3": "Tesaṃ tuṇḍena hātūna,",
"ja484:14.4": "muñce pubbakataṃ iṇaṃ.",
"ja484:15.1": "Aññepi tattha sakuṇā,",
"ja484:15.2": "khīṇapakkhā sudubbalā;",
"ja484:15.3": "Tesaṃ puññatthiko dammi,",
"ja484:15.4": "taṃ nidhiṃ āhu paṇḍitā.",
"ja484:16.1": "Īdisaṃ me iṇadānaṃ,",
"ja484:16.2": "iṇamokkho ca īdiso;",
"ja484:16.3": "Nidhinidhānamakkhāmi,",
"ja484:16.4": "evaṃ jānāhi kosiya”.",
"ja484:17.1": "“Bhaddako vatayaṃ pakkhī,",
"ja484:17.2": "dijo paramadhammiko;",
"ja484:17.3": "Ekaccesu manussesu,",
"ja484:17.4": "ayaṃ dhammo na vijjati.",
"ja484:18.1": "Bhuñja sāliṃ yathākāmaṃ,",
"ja484:18.2": "saha sabbehi ñātibhi;",
"ja484:18.3": "Punāpi suva passemu,",
"ja484:18.4": "piyaṃ me tava dassanaṃ”.",
"ja484:19.1": "“Bhuttañca pītañca tavassamamhi,",
"ja484:19.2": "Ratī ca no kosiya te sakāse;",
"ja484:19.3": "Nikkhittadaṇḍesu dadāhi dānaṃ,",
"ja484:19.4": "Jiṇṇe ca mātāpitaro bharassu”.",
"ja484:20.1": "“Lakkhī vata me udapādi ajja,",
"ja484:20.2": "Yo addasāsiṃ pavaraṃ dijānaṃ;",
"ja484:20.3": "Suvassa sutvāna subhāsitāni,",
"ja484:20.4": "Kāhāmi puññāni anappakāni”.",
"ja484:21.1": "So kosiyo attamano udaggo,",
"ja484:21.2": "Annañca pānañcabhisaṅkharitvā;",
"ja484:21.3": "Annena pānena pasannacitto,",
"ja484:21.4": "Santappayi samaṇabrāhmaṇe cāti.",
"ja484:22.1": "Sālikedārajātakaṃ paṭhamaṃ."
}