{
"ja388:1.1": "Jātaka",
"ja388:2.1": "Chakkanipāta",
"ja388:3.1": "Kharaputtavagga",
"ja388:4.1": "3. Tuṇḍilajātaka",
"ja388:5.1": "“Navachannake dāni diyyati,",
"ja388:5.2": "Puṇṇāyaṃ doṇi suvāminī ṭhitā;",
"ja388:5.3": "Bahuke jane pāsapāṇike,",
"ja388:5.4": "No ca kho me paṭibhāti bhuñjituṃ”.",
"ja388:6.1": "“Tasasi bhamasi leṇamicchasi,",
"ja388:6.2": "Attāṇosi kuhiṃ gamissasi;",
"ja388:6.3": "Appossukko bhuñja tuṇḍila,",
"ja388:6.4": "Maṃsatthāya hi positāmhase.",
"ja388:7.1": "Ogaha rahadaṃ akaddamaṃ,",
"ja388:7.2": "Sabbaṃ sedamalaṃ pavāhaya;",
"ja388:7.3": "Gaṇhāhi navaṃ vilepanaṃ,",
"ja388:7.4": "Yassa gandho na kadāci chijjati”.",
"ja388:8.1": "“Katamo rahado akaddamo,",
"ja388:8.2": "Kiṃsu sedamalanti vuccati;",
"ja388:8.3": "Katamañca navaṃ vilepanaṃ,",
"ja388:8.4": "Yassa gandho na kadāci chijjati”.",
"ja388:9.1": "“Dhammo rahado akaddamo,",
"ja388:9.2": "Pāpaṃ sedamalanti vuccati;",
"ja388:9.3": "Sīlañca navaṃ vilepanaṃ,",
"ja388:9.4": "Tassa gandho na kadāci chijjati.",
"ja388:10.1": "Nandanti sarīraghātino,",
"ja388:10.2": "Na ca nandanti sarīradhārino;",
"ja388:10.3": "Puṇṇāya ca puṇṇamāsiyā,",
"ja388:10.4": "Ramamānāva jahanti jīvitan”ti.",
"ja388:11.1": "Tuṇḍilajātakaṃ tatiyaṃ."
}