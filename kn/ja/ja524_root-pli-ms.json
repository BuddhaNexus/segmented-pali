{
"ja524:1.1": "Jātaka",
"ja524:2.1": "Cattālīsanipāta",
"ja524:3.1": "Tesakuṇavagga",
"ja524:4.1": "4. Saṅkhapālajātaka",
"ja524:5.1": "“Ariyāvakāsosi pasannanetto,",
"ja524:5.2": "Maññe bhavaṃ pabbajito kulamhā;",
"ja524:5.3": "Kathaṃ nu vittāni pahāya bhoge,",
"ja524:5.4": "Pabbaji nikkhamma gharā sapañña”.",
"ja524:6.1": "“Sayaṃ vimānaṃ naradeva disvā,",
"ja524:6.2": "Mahānubhāvassa mahoragassa;",
"ja524:6.3": "Disvāna puññāna mahāvipākaṃ,",
"ja524:6.4": "Saddhāyahaṃ pabbajitomhi rāja”.",
"ja524:7.1": "“Na kāmakāmā na bhayā na dosā,",
"ja524:7.2": "Vācaṃ musā pabbajitā bhaṇanti;",
"ja524:7.3": "Akkhāhi me pucchito etamatthaṃ,",
"ja524:7.4": "Sutvāna me jāyihitippasādo”.",
"ja524:8.1": "“Vāṇijja raṭṭhādhipa gacchamāno,",
"ja524:8.2": "Pathe addasāsimhi bhojaputte;",
"ja524:8.3": "Pavaddhakāyaṃ uragaṃ mahantaṃ,",
"ja524:8.4": "Ādāya gacchante pamodamāne.",
"ja524:9.1": "Sohaṃ samāgamma janinda tehi,",
"ja524:9.2": "Pahaṭṭhalomo avacamhi bhīto;",
"ja524:9.3": "‘Kuhiṃ ayaṃ nīyati bhīmakāyo,",
"ja524:9.4": "Nāgena kiṃ kāhatha bhojaputtā’.",
"ja524:10.1": "‘Nāgo ayaṃ nīyati bhojanatthā,",
"ja524:10.2": "Pavaddhakāyo urago mahanto;",
"ja524:10.3": "Sāduñca thūlañca muduñca maṃsaṃ,",
"ja524:10.4": "Na tvaṃ rasaññāsi videhaputta.",
"ja524:11.1": "Ito mayaṃ gantvā sakaṃ niketaṃ,",
"ja524:11.2": "Ādāya satthāni vikopayitvā;",
"ja524:11.3": "Maṃsāni bhokkhāma pamodamānā,",
"ja524:11.4": "Mayañhi ve sattavo pannagānaṃ’.",
"ja524:12.1": "‘Sace ayaṃ nīyati bhojanatthā,",
"ja524:12.2": "Pavaddhakāyo urago mahanto;",
"ja524:12.3": "Dadāmi vo balibaddāni soḷasa,",
"ja524:12.4": "Nāgaṃ imaṃ muñcatha bandhanasmā’.",
"ja524:13.1": "‘Addhā hi no bhakkho ayaṃ manāpo,",
"ja524:13.2": "Bahū ca no uragā bhuttapubbā;",
"ja524:13.3": "Karoma te taṃ vacanaṃ aḷāra,",
"ja524:13.4": "Mittañca no hohi videhaputta’.",
"ja524:14.1": "Tadāssu te bandhanā mocayiṃsu,",
"ja524:14.2": "Yaṃ natthuto paṭimokkassa pāse;",
"ja524:14.3": "Mutto ca so bandhanā nāgarājā,",
"ja524:14.4": "Pakkāmi pācīnamukho muhuttaṃ.",
"ja524:15.1": "Gantvāna pācīnamukho muhuttaṃ,",
"ja524:15.2": "Puṇṇehi nettehi palokayī maṃ;",
"ja524:15.3": "Tadāssahaṃ piṭṭhito anvagacchiṃ,",
"ja524:15.4": "Dasaṅguliṃ añjaliṃ paggahetvā.",
"ja524:16.1": "‘Gaccheva kho tvaṃ taramānarūpo,",
"ja524:16.2": "Mā taṃ amittā punaraggahesuṃ;",
"ja524:16.3": "Dukkho hi luddehi punā samāgamo,",
"ja524:16.4": "Adassanaṃ bhojaputtāna gaccha’.",
"ja524:17.1": "Agamāsi so rahadaṃ vippasannaṃ,",
"ja524:17.2": "Nīlobhāsaṃ ramaṇīyaṃ sutitthaṃ;",
"ja524:17.3": "Samotataṃ jambuhi vetasāhi,",
"ja524:17.4": "Pāvekkhi nittiṇṇabhayo patīto.",
"ja524:18.1": "So taṃ pavissa na cirassa nāgo,",
"ja524:18.2": "Dibbena me pāturahuṃ janinda;",
"ja524:18.3": "Upaṭṭhahī maṃ pitaraṃva putto,",
"ja524:18.4": "Hadayaṅgamaṃ kaṇṇasukhaṃ bhaṇanto.",
"ja524:19.1": "‘Tvaṃ mesi mātā ca pitā aḷāra,",
"ja524:19.2": "Abbhantaro pāṇadado sahāyo;",
"ja524:19.3": "Sakañca iddhiṃ paṭilābhakosmi,",
"ja524:19.4": "Aḷāra passa me nivesanāni;",
"ja524:19.5": "Pahūtabhakkhaṃ bahuannapānaṃ,",
"ja524:19.6": "Masakkasāraṃ viya vāsavassa.",
"ja524:20.1": "Taṃ bhūmibhāgehi upetarūpaṃ,",
"ja524:20.2": "Asakkharā ceva mudū subhā ca;",
"ja524:20.3": "Nīcattiṇā apparajā ca bhūmi,",
"ja524:20.4": "Pāsādikā yattha jahanti sokaṃ.",
"ja524:21.1": "Anāvakulā veḷuriyūpanīlā,",
"ja524:21.2": "Catuddisaṃ ambavanaṃ surammaṃ;",
"ja524:21.3": "Pakkā ca pesī ca phalā suphullā,",
"ja524:21.4": "Niccotukā dhārayantī phalāni’.",
"ja524:22.1": "Tesaṃ vanānaṃ naradeva majjhe,",
"ja524:22.2": "Nivesanaṃ bhassarasannikāsaṃ;",
"ja524:22.3": "Rajataggaḷaṃ sovaṇṇamayaṃ uḷāraṃ,",
"ja524:22.4": "Obhāsatī vijjurivantalikkhe.",
"ja524:23.1": "Maṇīmayā soṇṇamayā uḷārā,",
"ja524:23.2": "Anekacittā satataṃ sunimmitā;",
"ja524:23.3": "Paripūrā kaññāhi alaṅkatābhi,",
"ja524:23.4": "Suvaṇṇakāyūradharāhi rāja.",
"ja524:24.1": "So saṅkhapālo taramānarūpo,",
"ja524:24.2": "Pāsādamāruyha anomavaṇṇo;",
"ja524:24.3": "Sahassathambhaṃ atulānubhāvaṃ,",
"ja524:24.4": "Yatthassa bhariyā mahesī ahosi.",
"ja524:25.1": "Ekā ca nārī taramānarūpā,",
"ja524:25.2": "Ādāya veḷuriyamayaṃ mahagghaṃ;",
"ja524:25.3": "Subhaṃ maṇiṃ jātimantūpapannaṃ,",
"ja524:25.4": "Acoditā āsanamabbhihāsi.",
"ja524:26.1": "Tato maṃ urago hatthe gahetvā,",
"ja524:26.2": "Nisīdayī pāmukhaāsanasmiṃ;",
"ja524:26.3": "‘Idamāsanaṃ atra bhavaṃ nisīdatu,",
"ja524:26.4": "Bhavañhi me aññataro garūnaṃ’.",
"ja524:27.1": "Aññā ca nārī taramānarūpā,",
"ja524:27.2": "Ādāya vāriṃ upasaṅkamitvā;",
"ja524:27.3": "Pādāni pakkhālayī me janinda,",
"ja524:27.4": "Bhariyāva bhattū patino piyassa.",
"ja524:28.1": "Aparā ca nārī taramānarūpā,",
"ja524:28.2": "Paggayha sovaṇṇamayāya pātiyā;",
"ja524:28.3": "Anekasūpaṃ vividhaṃ viyañjanaṃ,",
"ja524:28.4": "Upanāmayī bhatta manuññarūpaṃ.",
"ja524:29.1": "Turiyehi maṃ bhārata bhuttavantaṃ,",
"ja524:29.2": "Upaṭṭhahuṃ bhattu mano viditvā;",
"ja524:29.3": "Tatuttariṃ maṃ nipatī mahantaṃ,",
"ja524:29.4": "Dibbehi kāmehi anappakehi.",
"ja524:30.1": "‘Bhariyā mametā tisatā aḷāra,",
"ja524:30.2": "Sabbattamajjhā padumuttarābhā;",
"ja524:30.3": "Aḷāra etāssu te kāmakārā,",
"ja524:30.4": "Dadāmi te tā paricārayassu’.",
"ja524:31.1": "Saṃvaccharaṃ dibbarasānubhutvā,",
"ja524:31.2": "Tadāssuhaṃ uttarimajjhabhāsiṃ;",
"ja524:31.3": "‘Nāgassidaṃ kinti kathañca laddhaṃ,",
"ja524:31.4": "Kathajjhagamāsi vimānaseṭṭhaṃ.",
"ja524:32.1": "Adhiccaladdhaṃ pariṇāmajaṃ te,",
"ja524:32.2": "Sayaṃkataṃ udāhu devehi dinnaṃ;",
"ja524:32.3": "Pucchāmi taṃ nāgarājetamatthaṃ,",
"ja524:32.4": "Kathajjhagamāsi vimānaseṭṭhaṃ’.",
"ja524:33.1": "‘Nādhiccaladdhaṃ na pariṇāmajaṃ me,",
"ja524:33.2": "Na sayaṃkataṃ nāpi devehi dinnaṃ;",
"ja524:33.3": "Sakehi kammehi apāpakehi,",
"ja524:33.4": "Puññehi me laddhamidaṃ vimānaṃ’.",
"ja524:34.1": "‘Kiṃ te vataṃ kiṃ pana brahmacariyaṃ,",
"ja524:34.2": "Kissa suciṇṇassa ayaṃ vipāko;",
"ja524:34.3": "Akkhāhi me nāgarājetamatthaṃ,",
"ja524:34.4": "Kathaṃ nu te laddhamidaṃ vimānaṃ’.",
"ja524:35.1": "‘Rājā ahosiṃ magadhānamissaro,",
"ja524:35.2": "Duyyodhano nāma mahānubhāvo;",
"ja524:35.3": "So ittaraṃ jīvitaṃ saṃviditvā,",
"ja524:35.4": "Asassataṃ vipariṇāmadhammaṃ.",
"ja524:36.1": "Annañca pānañca pasannacitto,",
"ja524:36.2": "Sakkacca dānaṃ vipulaṃ adāsiṃ;",
"ja524:36.3": "Opānabhūtaṃ me gharaṃ tadāsi,",
"ja524:36.4": "Santappitā samaṇabrāhmaṇā ca.",
"ja524:37.1": "Mālañca gandhañca vilepanañca,",
"ja524:37.2": "Padīpiyaṃ yānamupassayañca;",
"ja524:37.3": "Acchādanaṃ seyyamathannapānaṃ,",
"ja524:37.4": "Sakkacca dānāni adamha tattha.",
"ja524:38.1": "Taṃ me vataṃ taṃ pana brahmacariyaṃ,",
"ja524:38.2": "Tassa suciṇṇassa ayaṃ vipāko;",
"ja524:38.3": "Teneva me laddhamidaṃ vimānaṃ,",
"ja524:38.4": "Pahūtabhakkhaṃ bahuannapānaṃ;",
"ja524:38.5": "Naccehi gītehi cupetarūpaṃ,",
"ja524:38.6": "Ciraṭṭhitikaṃ na ca sassatāyaṃ’.",
"ja524:39.1": "‘Appānubhāvā taṃ mahānubhāvaṃ,",
"ja524:39.2": "Tejassinaṃ hanti atejavanto;",
"ja524:39.3": "Kimeva dāṭhāvudha kiṃ paṭicca,",
"ja524:39.4": "Hatthattamāgacchi vanibbakānaṃ.",
"ja524:40.1": "Bhayaṃ nu te anvagataṃ mahantaṃ,",
"ja524:40.2": "Tejo nu te nānvagaṃ dantamūlaṃ;",
"ja524:40.3": "Kimeva dāṭhāvudha kiṃ paṭicca,",
"ja524:40.4": "Kilesamāpajji vanibbakānaṃ’.",
"ja524:41.1": "‘Na me bhayaṃ anvagataṃ mahantaṃ,",
"ja524:41.2": "Tejo na sakkā mama tehi hantuṃ;",
"ja524:41.3": "Satañca dhammāni sukittitāni,",
"ja524:41.4": "Samuddavelāva duraccayāni.",
"ja524:42.1": "Cātuddasiṃ pañcadasiṃ aḷāra,",
"ja524:42.2": "Uposathaṃ niccamupāvasāmi;",
"ja524:42.3": "Athāgamuṃ soḷasa bhojaputtā,",
"ja524:42.4": "Rajjuṃ gahetvāna daḷhañca pāsaṃ.",
"ja524:43.1": "Bhetvāna nāsaṃ atikassa rajjuṃ,",
"ja524:43.2": "Nayiṃsu maṃ samparigayha luddā;",
"ja524:43.3": "Etādisaṃ dukkhamahaṃ titikkhaṃ,",
"ja524:43.4": "Uposathaṃ appaṭikopayanto’.",
"ja524:44.1": "‘Ekāyane taṃ pathe addasaṃsu,",
"ja524:44.2": "Balena vaṇṇena cupetarūpaṃ;",
"ja524:44.3": "Siriyā paññāya ca bhāvitosi,",
"ja524:44.4": "Kiṃ patthayaṃ nāga tapo karosi’.",
"ja524:45.1": "‘Na puttahetū na dhanassa hetu,",
"ja524:45.2": "Na āyuno cāpi aḷāra hetu;",
"ja524:45.3": "Manussayoniṃ abhipatthayāno,",
"ja524:45.4": "Tasmā parakkamma tapo karomi’.",
"ja524:46.1": "‘Tvaṃ lohitakkho vihatantaraṃso,",
"ja524:46.2": "Alaṅkato kappitakesamassu;",
"ja524:46.3": "Surosito lohitacandanena,",
"ja524:46.4": "Gandhabbarājāva disā pabhāsasi.",
"ja524:47.1": "Deviddhipattosi mahānubhāvo,",
"ja524:47.2": "Sabbehi kāmehi samaṅgibhūto;",
"ja524:47.3": "Pucchāmi taṃ nāgarājetamatthaṃ,",
"ja524:47.4": "Seyyo ito kena manussaloko’.",
"ja524:48.1": "‘Aḷāra nāññatra manussalokā,",
"ja524:48.2": "Suddhī va saṃvijjati saṃyamo vā;",
"ja524:48.3": "Ahañca laddhāna manussayoniṃ,",
"ja524:48.4": "Kāhāmi jātimaraṇassa antaṃ’.",
"ja524:49.1": "‘Saṃvaccharo me vasato tavantike,",
"ja524:49.2": "Annena pānena upaṭṭhitosmi;",
"ja524:49.3": "Āmantayitvāna palemi nāga,",
"ja524:49.4": "Cirappavutthosmi ahaṃ janinda’.",
"ja524:50.1": "‘Puttā ca dārā anujīvino ca,",
"ja524:50.2": "Niccānusiṭṭhā upatiṭṭhathetaṃ;",
"ja524:50.3": "Kaccinnu taṃ nābhisapittha koci,",
"ja524:50.4": "Piyañhi me dassanaṃ tuyhaṃ aḷāra’.",
"ja524:51.1": "‘Yathāpi mātū ca pitū agāre,",
"ja524:51.2": "Putto piyo paṭivihito vaseyya;",
"ja524:51.3": "Tatopi mayhaṃ idhameva seyyo,",
"ja524:51.4": "Cittañhi te nāga mayī pasannaṃ’.",
"ja524:52.1": "‘Maṇī mamaṃ vijjati lohitaṅko,",
"ja524:52.2": "Dhanāharo maṇiratanaṃ uḷāraṃ;",
"ja524:52.3": "Ādāya tvaṃ gaccha sakaṃ niketaṃ,",
"ja524:52.4": "Laddhā dhanaṃ taṃ maṇimossajassu’.",
"ja524:53.1": "Diṭṭhā mayā mānusakāpi kāmā,",
"ja524:53.2": "Asassatā vipariṇāmadhammā;",
"ja524:53.3": "Ādīnavaṃ kāmaguṇesu disvā,",
"ja524:53.4": "Saddhāyahaṃ pabbajitomhi rāja.",
"ja524:54.1": "Dumapphalānīva patanti māṇavā,",
"ja524:54.2": "Daharā ca vuddhā ca sarīrabhedā;",
"ja524:54.3": "Etampi disvā pabbajitomhi rāja,",
"ja524:54.4": "Apaṇṇakaṃ sāmaññameva seyyo”.",
"ja524:55.1": "“Addhā have sevitabbā sapaññā,",
"ja524:55.2": "Bahussutā ye bahuṭhānacintino;",
"ja524:55.3": "Nāgañca sutvāna tavañcaḷāra,",
"ja524:55.4": "Kāhāmi puññāni anappakāni”.",
"ja524:56.1": "“Addhā have sevitabbā sapaññā,",
"ja524:56.2": "Bahussutā ye bahuṭhānacintino;",
"ja524:56.3": "Nāgañca sutvāna mamañca rāja,",
"ja524:56.4": "Karohi puññāni anappakānī”ti.",
"ja524:57.1": "Saṅkhapālajātakaṃ catutthaṃ."
}