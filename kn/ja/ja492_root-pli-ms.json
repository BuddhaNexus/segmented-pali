{
"ja492:1.1": "Jātaka",
"ja492:2.1": "Pakiṇṇakanipāta",
"ja492:3.1": "Sālikedāravagga",
"ja492:4.1": "9. Tacchasūkarajātaka",
"ja492:5.1": "“Yadesamānā vicarimha,",
"ja492:5.2": "pabbatāni vanāni ca;",
"ja492:5.3": "Anvesaṃ vicariṃ ñātī,",
"ja492:5.4": "teme adhigatā mayā.",
"ja492:6.1": "Bahuñcidaṃ mūlaphalaṃ,",
"ja492:6.2": "bhakkho cāyaṃ anappako;",
"ja492:6.3": "Rammā cimā girīnajjo,",
"ja492:6.4": "phāsuvāso bhavissati.",
"ja492:7.1": "Idhevāhaṃ vasissāmi,",
"ja492:7.2": "saha sabbehi ñātibhi;",
"ja492:7.3": "Appossukko nirāsaṅkī,",
"ja492:7.4": "asoko akutobhayo”.",
"ja492:8.1": "“Aññampi leṇaṃ pariyesa,",
"ja492:8.2": "sattu no idha vijjati;",
"ja492:8.3": "So taccha sūkare hanti,",
"ja492:8.4": "idhāgantvā varaṃ varaṃ”.",
"ja492:9.1": "“Ko numhākaṃ idha sattu,",
"ja492:9.2": "ko ñātī susamāgate;",
"ja492:9.3": "Duppadhaṃse padhaṃseti,",
"ja492:9.4": "taṃ me akkhātha pucchitā”.",
"ja492:10.1": "“Uddhaggarājī migarājā,",
"ja492:10.2": "balī dāṭhāvudho migo;",
"ja492:10.3": "So taccha sūkare hanti,",
"ja492:10.4": "idhāgantvā varaṃ varaṃ”.",
"ja492:11.1": "“Na no dāṭhā na vijjanti,",
"ja492:11.2": "balaṃ kāye samohitaṃ;",
"ja492:11.3": "Sabbe samaggā hutvāna,",
"ja492:11.4": "vasaṃ kāhāma ekakaṃ”.",
"ja492:12.1": "“Hadayaṅgamaṃ kaṇṇasukhaṃ,",
"ja492:12.2": "Vācaṃ bhāsasi tacchaka;",
"ja492:12.3": "Yopi yuddhe palāyeyya,",
"ja492:12.4": "Tampi pacchā hanāmase”.",
"ja492:13.1": "“Pāṇātipātā virato nu ajja,",
"ja492:13.2": "Abhayaṃ nu te sabbabhūtesu dinnaṃ;",
"ja492:13.3": "Dāṭhā nu te migavadhāya na santi,",
"ja492:13.4": "Yo saṃghapatto kapaṇova jhāyasi”.",
"ja492:14.1": "“Na me dāṭhā na vijjanti,",
"ja492:14.2": "Balaṃ kāye samohitaṃ;",
"ja492:14.3": "Ñātī ca disvāna sāmaggī ekato,",
"ja492:14.4": "Tasmā ca jhāyāmi vanamhi ekako.",
"ja492:15.1": "Imassudaṃ yanti disodisaṃ pure,",
"ja492:15.2": "Bhayaṭṭitā leṇagavesino puthu;",
"ja492:15.3": "Te dāni saṅgamma vasanti ekato,",
"ja492:15.4": "Yatthaṭṭhitā duppasahajja te mayā.",
"ja492:16.1": "Pariṇāyakasampannā,",
"ja492:16.2": "sahitā ekavādino;",
"ja492:16.3": "Te maṃ samaggā hiṃseyyuṃ,",
"ja492:16.4": "tasmā nesaṃ na patthaye”.",
"ja492:17.1": "“Ekova indo asure jināti,",
"ja492:17.2": "Ekova seno hanti dije pasayha;",
"ja492:17.3": "Ekova byaggho migasaṅghapatto,",
"ja492:17.4": "Varaṃ varaṃ hanti balañhi tādisaṃ”.",
"ja492:18.1": "“Na heva indo na seno,",
"ja492:18.2": "napi byaggho migādhipo;",
"ja492:18.3": "Samagge sahite ñātī,",
"ja492:18.4": "na byagghe kurute vase”.",
"ja492:19.1": "“Kumbhīlakā sakuṇakā,",
"ja492:19.2": "saṃghino gaṇacārino;",
"ja492:19.3": "Sammodamānā ekajjhaṃ,",
"ja492:19.4": "uppatanti ḍayanti ca.",
"ja492:20.1": "Tesañca ḍayamānānaṃ,",
"ja492:20.2": "ekettha apasakkati;",
"ja492:20.3": "Tañca seno nitāḷeti,",
"ja492:20.4": "veyyagghiyeva sā gati”.",
"ja492:21.1": "“Ussāhito jaṭilena,",
"ja492:21.2": "luddenāmisacakkhunā;",
"ja492:21.3": "Dāṭhī dāṭhīsu pakkhandi,",
"ja492:21.4": "maññamāno yathā pure”.",
"ja492:22.1": "“Sādhu sambahulā ñātī,",
"ja492:22.2": "api rukkhā araññajā;",
"ja492:22.3": "Sūkarehi samaggehi,",
"ja492:22.4": "byaggho ekāyane hato”.",
"ja492:23.1": "Brāhmaṇañceva byagghañca,",
"ja492:23.2": "ubho hantvāna sūkarā.",
"ja492:23.3": "Ānandino pamuditā,",
"ja492:23.4": "mahānādaṃ panādisuṃ.",
"ja492:24.1": "Te su udumbaramūlasmiṃ,",
"ja492:24.2": "sūkarā susamāgatā;",
"ja492:24.3": "Tacchakaṃ abhisiñciṃsu,",
"ja492:24.4": "“tvaṃ no rājāsi issaro”ti.",
"ja492:25.1": "Tacchasūkarajātakaṃ navamaṃ."
}