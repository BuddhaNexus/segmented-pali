{
"thi-ap33:1.1": "Therīapadāna",
"thi-ap33:2.1": "Khattiyāvagga",
"thi-ap33:3.1": "3. Uppaladāyikātherīapadāna",
"thi-ap33:4.1": "“Nagare aruṇavatiyā,",
"thi-ap33:4.2": "aruṇo nāma khattiyo;",
"thi-ap33:4.3": "Tassa rañño ahuṃ bhariyā,",
"thi-ap33:4.4": "ekajjhaṃ cārayāmahaṃ.",
"thi-ap33:5.1": "Rahogatā nisīditvā,",
"thi-ap33:5.2": "evaṃ cintesahaṃ tadā;",
"thi-ap33:5.3": "‘Kusalaṃ me kataṃ natthi,",
"thi-ap33:5.4": "ādāya gamiyaṃ mama.",
"thi-ap33:6.1": "Mahābhitāpaṃ kaṭukaṃ,",
"thi-ap33:6.2": "ghorarūpaṃ sudāruṇaṃ;",
"thi-ap33:6.3": "Nirayaṃ nūna gacchāmi,",
"thi-ap33:6.4": "ettha me natthi saṃsayo’.",
"thi-ap33:7.1": "Evāhaṃ cintayitvāna,",
"thi-ap33:7.2": "pahaṃsetvāna mānasaṃ;",
"thi-ap33:7.3": "Rājānaṃ upagantvāna,",
"thi-ap33:7.4": "idaṃ vacanamabraviṃ.",
"thi-ap33:8.1": "‘Itthī nāma mayaṃ deva,",
"thi-ap33:8.2": "purisānittarā ahu;",
"thi-ap33:8.3": "Ekaṃ me samaṇaṃ dehi,",
"thi-ap33:8.4": "bhojayissāmi khattiya’.",
"thi-ap33:9.1": "Adāsi me tadā rājā,",
"thi-ap33:9.2": "samaṇaṃ bhāvitindriyaṃ;",
"thi-ap33:9.3": "Tassa pattaṃ gahetvāna,",
"thi-ap33:9.4": "paramannena pūrayiṃ.",
"thi-ap33:10.1": "Pūretvā paramaṃ annaṃ,",
"thi-ap33:10.2": "saha sugandhalepanaṃ;",
"thi-ap33:10.3": "Mahācelena chāditvā,",
"thi-ap33:10.4": "adāsiṃ tuṭṭhamānasā.",
"thi-ap33:11.1": "Tena kammena sukatena,",
"thi-ap33:11.2": "cetanāpaṇidhīhi ca;",
"thi-ap33:11.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap33:11.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap33:12.1": "Sahassadevarājūnaṃ,",
"thi-ap33:12.2": "mahesittamakārayiṃ;",
"thi-ap33:12.3": "Sahassacakkavattīnaṃ,",
"thi-ap33:12.4": "mahesittamakārayiṃ.",
"thi-ap33:13.1": "Padesarajjaṃ vipulaṃ,",
"thi-ap33:13.2": "gaṇanāto asaṅkhiyaṃ;",
"thi-ap33:13.3": "Nānāvidhaṃ bahuṃ aññaṃ,",
"thi-ap33:13.4": "tassa kammaphalaṃ tato.",
"thi-ap33:14.1": "Uppalasseva me vaṇṇo,",
"thi-ap33:14.2": "abhirūpā sudassanā;",
"thi-ap33:14.3": "Itthisabbaṅgasampannā,",
"thi-ap33:14.4": "abhijātā jutindharā.",
"thi-ap33:15.1": "Pacchime bhave sampatte,",
"thi-ap33:15.2": "ajāyiṃ sākiye kule;",
"thi-ap33:15.3": "Nārīsahassapāmokkhā,",
"thi-ap33:15.4": "suddhodanasutassahaṃ.",
"thi-ap33:16.1": "Nibbinditvā agārehaṃ,",
"thi-ap33:16.2": "pabbajiṃ anagāriyaṃ;",
"thi-ap33:16.3": "Sattamīrattisampattā,",
"thi-ap33:16.4": "catusaccamapāpuṇiṃ.",
"thi-ap33:17.1": "Cīvaraṃ piṇḍapātañca,",
"thi-ap33:17.2": "paccayaṃ sayanāsanaṃ;",
"thi-ap33:17.3": "Parimetuṃ na sakkomi,",
"thi-ap33:17.4": "piṇḍapātassidaṃ phalaṃ.",
"thi-ap33:18.1": "Yaṃ mayhaṃ pūritaṃ kammaṃ,",
"thi-ap33:18.2": "Kusalaṃ sarase muni;",
"thi-ap33:18.3": "Tuyhatthāya mahāvīra,",
"thi-ap33:18.4": "Paricattaṃ bahuṃ mayā.",
"thi-ap33:19.1": "Ekattiṃse ito kappe,",
"thi-ap33:19.2": "yaṃ dānamadadiṃ tadā;",
"thi-ap33:19.3": "Duggatiṃ nābhijānāmi,",
"thi-ap33:19.4": "piṇḍapātassidaṃ phalaṃ.",
"thi-ap33:20.1": "Dve gatiyo pajānāmi,",
"thi-ap33:20.2": "devattaṃ atha mānusaṃ;",
"thi-ap33:20.3": "Aññaṃ gatiṃ na jānāmi,",
"thi-ap33:20.4": "piṇḍapātassidaṃ phalaṃ.",
"thi-ap33:21.1": "Ucce kule pajānāmi,",
"thi-ap33:21.2": "mahāsāle mahaddhane;",
"thi-ap33:21.3": "Aññe kule na jānāmi,",
"thi-ap33:21.4": "piṇḍapātassidaṃ phalaṃ.",
"thi-ap33:22.1": "Bhavābhave saṃsaritvā,",
"thi-ap33:22.2": "sukkamūlena coditā;",
"thi-ap33:22.3": "Amanāpaṃ na passāmi,",
"thi-ap33:22.4": "somanassakataṃ phalaṃ.",
"thi-ap33:23.1": "Iddhīsu ca vasī homi,",
"thi-ap33:23.2": "dibbāya sotadhātuyā;",
"thi-ap33:23.3": "Cetopariyañāṇassa,",
"thi-ap33:23.4": "vasī homi mahāmune.",
"thi-ap33:24.1": "Pubbenivāsaṃ jānāmi,",
"thi-ap33:24.2": "dibbacakkhu visodhitaṃ;",
"thi-ap33:24.3": "Sabbāsavā parikkhīṇā,",
"thi-ap33:24.4": "natthi dāni punabbhavo.",
"thi-ap33:25.1": "Atthadhammaniruttīsu,",
"thi-ap33:25.2": "paṭibhāne tatheva ca;",
"thi-ap33:25.3": "Ñāṇaṃ mama mahāvīra,",
"thi-ap33:25.4": "uppannaṃ tava santike.",
"thi-ap33:26.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap33:26.4": "viharāmi anāsavā.",
"thi-ap33:27.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap33:27.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap33:28.1": "Paṭisambhidā catasso, … pe …",
"thi-ap33:28.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap33:29.1": "Itthaṃ sudaṃ uppaladāyikā bhikkhunī bhagavato sammukhā imā gāthāyo abhāsitthāti.",
"thi-ap33:30.1": "Uppaladāyikātheriyāpadānaṃ tatiyaṃ."
}