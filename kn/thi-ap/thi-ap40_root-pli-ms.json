{
"thi-ap40:1.1": "Therīapadāna",
"thi-ap40:2.1": "Khattiyāvagga",
"thi-ap40:3.1": "10 Pesalātherīapadāna",
"thi-ap40:4.1": "“Imamhi bhaddake kappe,",
"thi-ap40:4.2": "brahmabandhu mahāyaso;",
"thi-ap40:4.3": "Kassapo nāma gottena,",
"thi-ap40:4.4": "uppajji vadataṃ varo.",
"thi-ap40:5.1": "Sāvatthiyaṃ pure vare,",
"thi-ap40:5.2": "upāsakakule ahaṃ;",
"thi-ap40:5.3": "Pasūtā taṃ jinavaraṃ,",
"thi-ap40:5.4": "disvā sutvā ca desanaṃ.",
"thi-ap40:6.1": "Taṃ vīraṃ saraṇaṃ gantvā,",
"thi-ap40:6.2": "sīlāni ca samādiyiṃ;",
"thi-ap40:6.3": "Kadāci so mahāvīro,",
"thi-ap40:6.4": "mahājanasamāgame.",
"thi-ap40:7.1": "Attano abhisambodhiṃ,",
"thi-ap40:7.2": "pakāsesi narāsabho;",
"thi-ap40:7.3": "Ananussutadhammesu,",
"thi-ap40:7.4": "pubbe dukkhādikesu ca.",
"thi-ap40:8.1": "Cakkhu ñāṇañca paññā ca,",
"thi-ap40:8.2": "vijjāloko ca āsi me;",
"thi-ap40:8.3": "Taṃ sutvā uggahetvāna,",
"thi-ap40:8.4": "paripucchiñca bhikkhavo.",
"thi-ap40:9.1": "Tena kammena sukatena,",
"thi-ap40:9.2": "cetanāpaṇidhīhi ca;",
"thi-ap40:9.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap40:9.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap40:10.1": "Pacchime ca bhave dāni,",
"thi-ap40:10.2": "Jātā seṭṭhimahākule;",
"thi-ap40:10.3": "Upecca buddhaṃ saddhammaṃ,",
"thi-ap40:10.4": "Sutvā saccūpasaṃhitaṃ.",
"thi-ap40:11.1": "Pabbajitvācireneva,",
"thi-ap40:11.2": "saccatthāni vicintayaṃ;",
"thi-ap40:11.3": "Khepetvā āsave sabbe,",
"thi-ap40:11.4": "arahattamapāpuṇiṃ.",
"thi-ap40:12.1": "Iddhīsu ca vasī homi,",
"thi-ap40:12.2": "dibbāya sotadhātuyā;",
"thi-ap40:12.3": "Cetopariyañāṇassa,",
"thi-ap40:12.4": "vasī homi mahāmune.",
"thi-ap40:13.1": "Pubbenivāsaṃ jānāmi,",
"thi-ap40:13.2": "dibbacakkhu visodhitaṃ;",
"thi-ap40:13.3": "Sabbāsavā parikkhīṇā,",
"thi-ap40:13.4": "natthi dāni punabbhavo.",
"thi-ap40:14.1": "Atthadhammaniruttīsu,",
"thi-ap40:14.2": "paṭibhāne tatheva ca;",
"thi-ap40:14.3": "Ñāṇaṃ me vimalaṃ suddhaṃ,",
"thi-ap40:14.4": "buddhaseṭṭhassa vāhasā.",
"thi-ap40:15.1": "Kilesā jhāpitā mayhaṃ,",
"thi-ap40:15.2": "bhavā sabbe samūhatā;",
"thi-ap40:15.3": "Nāgīva bandhanaṃ chetvā,",
"thi-ap40:15.4": "viharāmi anāsavā.",
"thi-ap40:16.1": "Svāgataṃ vata me āsi,",
"thi-ap40:16.2": "mama buddhassa santike;",
"thi-ap40:16.3": "Tisso vijjā anuppattā,",
"thi-ap40:16.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap40:17.1": "Paṭisambhidā catasso,",
"thi-ap40:17.2": "Vimokkhāpi ca aṭṭhime;",
"thi-ap40:17.3": "Chaḷabhiññā sacchikatā,",
"thi-ap40:17.4": "Kataṃ buddhassa sāsanaṃ”. #1359",
"thi-ap40:18.1": "Itthaṃ sudaṃ pesalā bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap40:19.1": "Pesalātheriyāpadānaṃ dasamaṃ.",
"thi-ap40:20.1": "Khattiyāvaggo catuttho.",
"thi-ap40:21.1": "Tassuddānaṃ",
"thi-ap40:22.1": "Khattiyā brāhmaṇī ceva,",
"thi-ap40:22.2": "tathā uppaladāyikā;",
"thi-ap40:22.3": "Siṅgālamātā sukkā ca,",
"thi-ap40:22.4": "abhirūpā aḍḍhakāsikā.",
"thi-ap40:23.1": "Puṇṇā ca ambapālī ca,",
"thi-ap40:23.2": "pesalāti ca tā dasa;",
"thi-ap40:23.3": "Gāthāyo dvisatānettha,",
"thi-ap40:23.4": "dvicattālīsa cuttari.",
"thi-ap40:24.1": "Atha vagguddānaṃ",
"thi-ap40:25.1": "Sumedhā ekūposathā,",
"thi-ap40:25.2": "kuṇḍalakesī khattiyā;",
"thi-ap40:25.3": "Sahassaṃ tisatā gāthā,",
"thi-ap40:25.4": "sattatālīsa piṇḍitā.",
"thi-ap40:26.1": "Saha uddānagāthāhi,",
"thi-ap40:26.2": "gaṇitāyo vibhāvibhi;",
"thi-ap40:26.3": "Sahassaṃ tisataṃ gāthā,",
"thi-ap40:26.4": "sattapaññāsameva cāti.",
"thi-ap40:27.1": "Therikāpadānaṃ samattaṃ.",
"thi-ap40:28.1": "Apadānapāḷi samattā."
}