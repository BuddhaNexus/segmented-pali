{
"thi-ap16:1.1": "Therīapadāna",
"thi-ap16:2.1": "Ekūposathikavagga",
"thi-ap16:3.1": "6 Naḷamālikātherīapadāna",
"thi-ap16:4.1": "“Candabhāgānadītīre,",
"thi-ap16:4.2": "ahosiṃ kinnarī tadā;",
"thi-ap16:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"thi-ap16:4.4": "sayambhuṃ aparājitaṃ.",
"thi-ap16:5.1": "Pasannacittā sumanā,",
"thi-ap16:5.2": "vedajātā katañjalī;",
"thi-ap16:5.3": "Naḷamālaṃ gahetvāna,",
"thi-ap16:5.4": "sayambhuṃ abhipūjayiṃ.",
"thi-ap16:6.1": "Tena kammena sukatena,",
"thi-ap16:6.2": "cetanāpaṇidhīhi ca;",
"thi-ap16:6.3": "Jahitvā kinnarīdehaṃ,",
"thi-ap16:6.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap16:7.1": "Chattiṃsadevarājūnaṃ,",
"thi-ap16:7.2": "mahesittamakārayiṃ;",
"thi-ap16:7.3": "Manasā patthitaṃ mayhaṃ,",
"thi-ap16:7.4": "nibbattati yathicchitaṃ.",
"thi-ap16:8.1": "Dasannaṃ cakkavattīnaṃ,",
"thi-ap16:8.2": "mahesittamakārayiṃ;",
"thi-ap16:8.3": "Ocitattāva hutvāna,",
"thi-ap16:8.4": "saṃsarāmi bhavesvahaṃ.",
"thi-ap16:9.1": "Kusalaṃ vijjate mayhaṃ,",
"thi-ap16:9.2": "pabbajiṃ anagāriyaṃ;",
"thi-ap16:9.3": "Pūjārahā ahaṃ ajja,",
"thi-ap16:9.4": "sakyaputtassa sāsane.",
"thi-ap16:10.1": "Visuddhamanasā ajja,",
"thi-ap16:10.2": "apetamanapāpikā;",
"thi-ap16:10.3": "Sabbāsavā parikkhīṇā,",
"thi-ap16:10.4": "natthi dāni punabbhavo.",
"thi-ap16:11.1": "Catunnavutito kappe,",
"thi-ap16:11.2": "yaṃ buddhamabhipūjayiṃ;",
"thi-ap16:11.3": "Duggatiṃ nābhijānāmi,",
"thi-ap16:11.4": "naḷamālāyidaṃ phalaṃ.",
"thi-ap16:12.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap16:12.4": "viharāmi anāsavā.",
"thi-ap16:13.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap16:13.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap16:14.1": "Paṭisambhidā catasso, … pe …",
"thi-ap16:14.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap16:15.1": "Itthaṃ sudaṃ naḷamālikā bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap16:16.1": "Naḷamālikātheriyāpadānaṃ chaṭṭhaṃ."
}