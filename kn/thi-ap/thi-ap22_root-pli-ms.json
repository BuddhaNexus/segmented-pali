{
"thi-ap22:1.1": "Therīapadāna",
"thi-ap22:2.1": "Kuṇḍalakesīvagga",
"thi-ap22:3.1": "2. Kisāgotamītherīapadāna",
"thi-ap22:4.1": "“Padumuttaro nāma jino,",
"thi-ap22:4.2": "sabbadhammāna pāragū;",
"thi-ap22:4.3": "Ito satasahassamhi,",
"thi-ap22:4.4": "kappe uppajji nāyako.",
"thi-ap22:5.1": "Tadāhaṃ haṃsavatiyaṃ,",
"thi-ap22:5.2": "jātā aññatare kule;",
"thi-ap22:5.3": "Upetvā taṃ naravaraṃ,",
"thi-ap22:5.4": "saraṇaṃ samupāgamiṃ.",
"thi-ap22:6.1": "Dhammañca tassa assosiṃ,",
"thi-ap22:6.2": "catusaccūpasañhitaṃ;",
"thi-ap22:6.3": "Madhuraṃ paramassādaṃ,",
"thi-ap22:6.4": "vaṭṭasantisukhāvahaṃ.",
"thi-ap22:7.1": "Tadā ca bhikkhuniṃ vīro,",
"thi-ap22:7.2": "lūkhacīvaradhāriniṃ;",
"thi-ap22:7.3": "Ṭhapento etadaggamhi,",
"thi-ap22:7.4": "vaṇṇayī purisuttamo.",
"thi-ap22:8.1": "Janetvānappakaṃ pītiṃ,",
"thi-ap22:8.2": "sutvā bhikkhuniyā guṇe;",
"thi-ap22:8.3": "Kāraṃ katvāna buddhassa,",
"thi-ap22:8.4": "yathāsatti yathābalaṃ.",
"thi-ap22:9.1": "Nipacca munivaraṃ taṃ,",
"thi-ap22:9.2": "taṃ ṭhānamabhipatthayiṃ;",
"thi-ap22:9.3": "Tadānumodi sambuddho,",
"thi-ap22:9.4": "ṭhānalābhāya nāyako.",
"thi-ap22:10.1": "‘Satasahassito kappe,",
"thi-ap22:10.2": "okkākakulasambhavo;",
"thi-ap22:10.3": "Gotamo nāma gottena,",
"thi-ap22:10.4": "satthā loke bhavissati.",
"thi-ap22:11.1": "Tassa dhammesu dāyādā,",
"thi-ap22:11.2": "orasā dhammanimmitā;",
"thi-ap22:11.3": "Kisāgotamī nāmena,",
"thi-ap22:11.4": "hessati satthu sāvikā’.",
"thi-ap22:12.1": "Taṃ sutvā muditā hutvā,",
"thi-ap22:12.2": "yāvajīvaṃ tadā jinaṃ;",
"thi-ap22:12.3": "Mettacittā paricariṃ,",
"thi-ap22:12.4": "paccayehi vināyakaṃ.",
"thi-ap22:13.1": "Tena kammena sukatena,",
"thi-ap22:13.2": "cetanāpaṇidhīhi ca;",
"thi-ap22:13.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap22:13.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap22:14.1": "Imamhi bhaddake kappe,",
"thi-ap22:14.2": "brahmabandhu mahāyaso;",
"thi-ap22:14.3": "Kassapo nāma gottena,",
"thi-ap22:14.4": "uppajji vadataṃ varo.",
"thi-ap22:15.1": "Upaṭṭhāko mahesissa,",
"thi-ap22:15.2": "tadā āsi narissaro;",
"thi-ap22:15.3": "Kāsirājā kikī nāma,",
"thi-ap22:15.4": "bārāṇasipuruttame.",
"thi-ap22:16.1": "Pañcamī tassa dhītāsiṃ,",
"thi-ap22:16.2": "dhammā nāmena vissutā;",
"thi-ap22:16.3": "Dhammaṃ sutvā jinaggassa,",
"thi-ap22:16.4": "pabbajjaṃ samarocayiṃ.",
"thi-ap22:17.1": "Anujāni na no tāto,",
"thi-ap22:17.2": "agāreva tadā mayaṃ;",
"thi-ap22:17.3": "Vīsavassasahassāni,",
"thi-ap22:17.4": "vicarimha atanditā.",
"thi-ap22:18.1": "Komāribrahmacariyaṃ,",
"thi-ap22:18.2": "rājakaññā sukhedhitā;",
"thi-ap22:18.3": "Buddhopaṭṭhānaniratā,",
"thi-ap22:18.4": "muditā satta dhītaro.",
"thi-ap22:19.1": "Samaṇī samaṇaguttā ca,",
"thi-ap22:19.2": "bhikkhunī bhikkhudāyikā;",
"thi-ap22:19.3": "Dhammā ceva sudhammā ca,",
"thi-ap22:19.4": "sattamī saṃghadāyikā.",
"thi-ap22:20.1": "Khemā uppalavaṇṇā ca,",
"thi-ap22:20.2": "paṭācārā ca kuṇḍalā;",
"thi-ap22:20.3": "Ahañca dhammadinnā ca,",
"thi-ap22:20.4": "visākhā hoti sattamī.",
"thi-ap22:21.1": "Tehi kammehi sukatehi,",
"thi-ap22:21.2": "cetanāpaṇidhīhi ca;",
"thi-ap22:21.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap22:21.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap22:22.1": "Pacchime ca bhave dāni,",
"thi-ap22:22.2": "jātā seṭṭhikule ahaṃ;",
"thi-ap22:22.3": "Duggate adhane naṭṭhe,",
"thi-ap22:22.4": "gatā ca sadhanaṃ kulaṃ.",
"thi-ap22:23.1": "Patiṃ ṭhapetvā sesā me,",
"thi-ap22:23.2": "dessanti adhanā iti;",
"thi-ap22:23.3": "Yadā ca pasūtā āsiṃ,",
"thi-ap22:23.4": "sabbesaṃ dayitā tadā.",
"thi-ap22:24.1": "Yadā so taruṇo bhaddo,",
"thi-ap22:24.2": "komalako sukhedhito;",
"thi-ap22:24.3": "Sapāṇamiva kanto me,",
"thi-ap22:24.4": "tadā yamavasaṃ gato.",
"thi-ap22:25.1": "Sokaṭṭādīnavadanā,",
"thi-ap22:25.2": "assunettā rudammukhā;",
"thi-ap22:25.3": "Mataṃ kuṇapamādāya,",
"thi-ap22:25.4": "vilapantī gamāmahaṃ.",
"thi-ap22:26.1": "Tadā ekena sandiṭṭhā,",
"thi-ap22:26.2": "upetvābhisakkuttamaṃ;",
"thi-ap22:26.3": "Avocaṃ ‘dehi bhesajjaṃ,",
"thi-ap22:26.4": "puttasañjīvananti bho’.",
"thi-ap22:27.1": "‘Na vijjante matā yasmiṃ,",
"thi-ap22:27.2": "gehe siddhatthakaṃ tato;",
"thi-ap22:27.3": "Āharā’ti jino āha,",
"thi-ap22:27.4": "vinayopāyakovido.",
"thi-ap22:28.1": "Tadā gamitvā sāvatthiṃ,",
"thi-ap22:28.2": "na labhiṃ tādisaṃ gharaṃ;",
"thi-ap22:28.3": "Kuto siddhatthakaṃ tasmā,",
"thi-ap22:28.4": "tato laddhā satiṃ ahaṃ.",
"thi-ap22:29.1": "Kuṇapaṃ chaḍḍayitvāna,",
"thi-ap22:29.2": "upesiṃ lokanāyakaṃ;",
"thi-ap22:29.3": "Dūratova mamaṃ disvā,",
"thi-ap22:29.4": "avoca madhurassaro.",
"thi-ap22:30.1": "‘Yo ca vassasataṃ jīve,",
"thi-ap22:30.2": "apassaṃ udayabbayaṃ;",
"thi-ap22:30.3": "Ekāhaṃ jīvitaṃ seyyo,",
"thi-ap22:30.4": "passato udayabbayaṃ.",
"thi-ap22:31.1": "Na gāmadhammo nigamassa dhammo,",
"thi-ap22:31.2": "Na cāpiyaṃ ekakulassa dhammo;",
"thi-ap22:31.3": "Sabbassa lokassa sadevakassa,",
"thi-ap22:31.4": "Eseva dhammo yadidaṃ aniccatā’.",
"thi-ap22:32.1": "Sāhaṃ sutvānimā gāthā,",
"thi-ap22:32.2": "dhammacakkhuṃ visodhayiṃ;",
"thi-ap22:32.3": "Tato viññātasaddhammā,",
"thi-ap22:32.4": "pabbajiṃ anagāriyaṃ.",
"thi-ap22:33.1": "Tathā pabbajitā santī,",
"thi-ap22:33.2": "yuñjantī jinasāsane;",
"thi-ap22:33.3": "Na cireneva kālena,",
"thi-ap22:33.4": "arahattamapāpuṇiṃ.",
"thi-ap22:34.1": "Iddhīsu ca vasī homi,",
"thi-ap22:34.2": "dibbāya sotadhātuyā;",
"thi-ap22:34.3": "Paracittāni jānāmi,",
"thi-ap22:34.4": "satthusāsanakārikā.",
"thi-ap22:35.1": "Pubbenivāsaṃ jānāmi,",
"thi-ap22:35.2": "dibbacakkhu visodhitaṃ;",
"thi-ap22:35.3": "Khepetvā āsave sabbe,",
"thi-ap22:35.4": "visuddhāsiṃ sunimmalā.",
"thi-ap22:36.1": "Pariciṇṇo mayā satthā,",
"thi-ap22:36.2": "kataṃ buddhassa sāsanaṃ;",
"thi-ap22:36.3": "Ohito garuko bhāro,",
"thi-ap22:36.4": "bhavanetti samūhatā.",
"thi-ap22:37.1": "Yassatthāya pabbajitā,",
"thi-ap22:37.2": "agārasmānagāriyaṃ;",
"thi-ap22:37.3": "So me attho anuppatto,",
"thi-ap22:37.4": "sabbasaṃyojanakkhayo.",
"thi-ap22:38.1": "Atthadhammaniruttīsu,",
"thi-ap22:38.2": "paṭibhāne tatheva ca;",
"thi-ap22:38.3": "Ñāṇaṃ me vimalaṃ suddhaṃ,",
"thi-ap22:38.4": "buddhaseṭṭhassa vāhasā.",
"thi-ap22:39.1": "Saṅkārakūṭā āhitvā,",
"thi-ap22:39.2": "susānā rathiyāpi ca;",
"thi-ap22:39.3": "Tato saṅghāṭikaṃ katvā,",
"thi-ap22:39.4": "lūkhaṃ dhāremi cīvaraṃ.",
"thi-ap22:40.1": "Jino tasmiṃ guṇe tuṭṭho,",
"thi-ap22:40.2": "lūkhacīvaradhāraṇe;",
"thi-ap22:40.3": "Ṭhapesi etadaggamhi,",
"thi-ap22:40.4": "parisāsu vināyako.",
"thi-ap22:41.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap22:41.4": "viharāmi anāsavā.",
"thi-ap22:42.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap22:42.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap22:43.1": "Paṭisambhidā catasso, … pe …",
"thi-ap22:43.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap22:44.1": "Itthaṃ sudaṃ kisāgotamī bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap22:45.1": "Kisāgotamītheriyāpadānaṃ dutiyaṃ."
}