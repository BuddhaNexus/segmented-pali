{
"thi-ap20:1.1": "Therīapadāna",
"thi-ap20:2.1": "Ekūposathikavagga",
"thi-ap20:3.1": "10. Paṭācārātherīapadāna",
"thi-ap20:4.1": "“Padumuttaro nāma jino,",
"thi-ap20:4.2": "sabbadhammāna pāragū;",
"thi-ap20:4.3": "Ito satasahassamhi,",
"thi-ap20:4.4": "kappe uppajji nāyako.",
"thi-ap20:5.1": "Tadāhaṃ haṃsavatiyaṃ,",
"thi-ap20:5.2": "jātā seṭṭhikule ahuṃ;",
"thi-ap20:5.3": "Nānāratanapajjote,",
"thi-ap20:5.4": "mahāsukhasamappitā.",
"thi-ap20:6.1": "Upetvā taṃ mahāvīraṃ,",
"thi-ap20:6.2": "assosiṃ dhammadesanaṃ;",
"thi-ap20:6.3": "Tato jātapasādāhaṃ,",
"thi-ap20:6.4": "upesiṃ saraṇaṃ jinaṃ.",
"thi-ap20:7.1": "Tato vinayadhārīnaṃ,",
"thi-ap20:7.2": "aggaṃ vaṇṇesi nāyako;",
"thi-ap20:7.3": "Bhikkhuniṃ lajjiniṃ tādiṃ,",
"thi-ap20:7.4": "kappākappavisāradaṃ.",
"thi-ap20:8.1": "Tadā muditacittāhaṃ,",
"thi-ap20:8.2": "taṃ ṭhānamabhikaṅkhinī;",
"thi-ap20:8.3": "Nimantetvā dasabalaṃ,",
"thi-ap20:8.4": "sasaṃghaṃ lokanāyakaṃ.",
"thi-ap20:9.1": "Bhojayitvāna sattāhaṃ,",
"thi-ap20:9.2": "daditvāva ticīvaraṃ;",
"thi-ap20:9.3": "Nipacca sirasā pāde,",
"thi-ap20:9.4": "idaṃ vacanamabraviṃ.",
"thi-ap20:10.1": "‘Yā tayā vaṇṇitā vīra,",
"thi-ap20:10.2": "ito aṭṭhamake muni;",
"thi-ap20:10.3": "Tādisāhaṃ bhavissāmi,",
"thi-ap20:10.4": "yadi sijjhati nāyaka’.",
"thi-ap20:11.1": "Tadā avoca maṃ satthā,",
"thi-ap20:11.2": "‘bhadde mā bhāyi assasa;",
"thi-ap20:11.3": "Anāgatamhi addhāne,",
"thi-ap20:11.4": "lacchase taṃ manorathaṃ.",
"thi-ap20:12.1": "Satasahassito kappe,",
"thi-ap20:12.2": "okkākakulasambhavo;",
"thi-ap20:12.3": "Gotamo nāma gottena,",
"thi-ap20:12.4": "satthā loke bhavissati.",
"thi-ap20:13.1": "Tassa dhammesu dāyādā,",
"thi-ap20:13.2": "orasā dhammanimmitā;",
"thi-ap20:13.3": "Paṭācārāti nāmena,",
"thi-ap20:13.4": "hessati satthu sāvikā’.",
"thi-ap20:14.1": "Tadāhaṃ muditā hutvā,",
"thi-ap20:14.2": "yāvajīvaṃ tadā jinaṃ;",
"thi-ap20:14.3": "Mettacittā paricariṃ,",
"thi-ap20:14.4": "sasaṃghaṃ lokanāyakaṃ.",
"thi-ap20:15.1": "Tena kammena sukatena,",
"thi-ap20:15.2": "cetanāpaṇidhīhi ca;",
"thi-ap20:15.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap20:15.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap20:16.1": "Imamhi bhaddake kappe,",
"thi-ap20:16.2": "brahmabandhu mahāyaso;",
"thi-ap20:16.3": "Kassapo nāma gottena,",
"thi-ap20:16.4": "uppajji vadataṃ varo.",
"thi-ap20:17.1": "Upaṭṭhāko mahesissa,",
"thi-ap20:17.2": "tadā āsi narissaro;",
"thi-ap20:17.3": "Kāsirājā kikī nāma,",
"thi-ap20:17.4": "bārāṇasipuruttame.",
"thi-ap20:18.1": "Tassāsiṃ tatiyā dhītā,",
"thi-ap20:18.2": "bhikkhunī iti vissutā;",
"thi-ap20:18.3": "Dhammaṃ sutvā jinaggassa,",
"thi-ap20:18.4": "pabbajjaṃ samarocayiṃ.",
"thi-ap20:19.1": "Anujāni na no tāto,",
"thi-ap20:19.2": "agāreva tadā mayaṃ;",
"thi-ap20:19.3": "Vīsavassasahassāni,",
"thi-ap20:19.4": "vicarimha atanditā.",
"thi-ap20:20.1": "Komāribrahmacariyaṃ,",
"thi-ap20:20.2": "rājakaññā sukhedhitā;",
"thi-ap20:20.3": "Buddhopaṭṭhānaniratā,",
"thi-ap20:20.4": "muditā sattadhītaro.",
"thi-ap20:21.1": "Samaṇī samaṇaguttā ca,",
"thi-ap20:21.2": "bhikkhunī bhikkhudāyikā;",
"thi-ap20:21.3": "Dhammā ceva sudhammā ca,",
"thi-ap20:21.4": "sattamī saṃghadāyikā.",
"thi-ap20:22.1": "Ahaṃ uppalavaṇṇā ca,",
"thi-ap20:22.2": "khemā bhaddā ca bhikkhunī;",
"thi-ap20:22.3": "Kisāgotamī dhammadinnā,",
"thi-ap20:22.4": "visākhā hoti sattamī.",
"thi-ap20:23.1": "Tehi kammehi sukatehi,",
"thi-ap20:23.2": "cetanāpaṇidhīhi ca;",
"thi-ap20:23.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap20:23.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap20:24.1": "Pacchime ca bhave dāni,",
"thi-ap20:24.2": "jātā seṭṭhikule ahaṃ;",
"thi-ap20:24.3": "Sāvatthiyaṃ puravare,",
"thi-ap20:24.4": "iddhe phīte mahaddhane.",
"thi-ap20:25.1": "Yadā ca yobbanūpetā,",
"thi-ap20:25.2": "vitakkavasagā ahaṃ;",
"thi-ap20:25.3": "Naraṃ jārapatiṃ disvā,",
"thi-ap20:25.4": "tena saddhiṃ agacchahaṃ.",
"thi-ap20:26.1": "Ekaputtapasūtāhaṃ,",
"thi-ap20:26.2": "dutiyo kucchiyā mamaṃ;",
"thi-ap20:26.3": "Tadāhaṃ mātāpitaro,",
"thi-ap20:26.4": "okkhāmīti sunicchitā.",
"thi-ap20:27.1": "Nārocesiṃ patiṃ mayhaṃ,",
"thi-ap20:27.2": "tadā tamhi pavāsite;",
"thi-ap20:27.3": "Ekikā niggatā gehā,",
"thi-ap20:27.4": "gantuṃ sāvatthimuttamaṃ.",
"thi-ap20:28.1": "Tato me sāmi āgantvā,",
"thi-ap20:28.2": "sambhāvesi pathe mamaṃ;",
"thi-ap20:28.3": "Tadā me kammajā vātā,",
"thi-ap20:28.4": "uppannā atidāruṇā.",
"thi-ap20:29.1": "Uṭṭhito ca mahāmegho,",
"thi-ap20:29.2": "pasūtisamaye mama;",
"thi-ap20:29.3": "Dabbatthāya tadā gantvā,",
"thi-ap20:29.4": "sāmi sappena mārito.",
"thi-ap20:30.1": "Tadā vijātadukkhena,",
"thi-ap20:30.2": "anāthā kapaṇā ahaṃ;",
"thi-ap20:30.3": "Kunnadiṃ pūritaṃ disvā,",
"thi-ap20:30.4": "gacchantī sakulālayaṃ.",
"thi-ap20:31.1": "Bālaṃ ādāya atariṃ,",
"thi-ap20:31.2": "pārakūle ca ekakaṃ;",
"thi-ap20:31.3": "Sāyetvā bālakaṃ puttaṃ,",
"thi-ap20:31.4": "itaraṃ taraṇāyahaṃ.",
"thi-ap20:32.1": "Nivattā ukkuso hāsi,",
"thi-ap20:32.2": "taruṇaṃ vilapantakaṃ;",
"thi-ap20:32.3": "Itarañca vahī soto,",
"thi-ap20:32.4": "sāhaṃ sokasamappitā.",
"thi-ap20:33.1": "Sāvatthinagaraṃ gantvā,",
"thi-ap20:33.2": "assosiṃ sajane mate;",
"thi-ap20:33.3": "Tadā avocaṃ sokaṭṭā,",
"thi-ap20:33.4": "mahāsokasamappitā.",
"thi-ap20:34.1": "‘Ubho puttā kālaṅkatā,",
"thi-ap20:34.2": "panthe mayhaṃ patī mato;",
"thi-ap20:34.3": "Mātā pitā ca bhātā ca,",
"thi-ap20:34.4": "ekacitamhi ḍayhare’.",
"thi-ap20:35.1": "Tadā kisā ca paṇḍu ca,",
"thi-ap20:35.2": "anāthā dīnamānasā;",
"thi-ap20:35.3": "Ito tato bhamantīhaṃ,",
"thi-ap20:35.4": "addasaṃ narasārathiṃ.",
"thi-ap20:36.1": "Tato avoca maṃ satthā,",
"thi-ap20:36.2": "‘putte mā soci assasa;",
"thi-ap20:36.3": "Attānaṃ te gavesassu,",
"thi-ap20:36.4": "kiṃ niratthaṃ vihaññasi.",
"thi-ap20:37.1": "Na santi puttā tāṇāya,",
"thi-ap20:37.2": "na ñātī napi bandhavā;",
"thi-ap20:37.3": "Antakenādhipannassa,",
"thi-ap20:37.4": "natthi ñātīsu tāṇatā’.",
"thi-ap20:38.1": "Taṃ sutvā munino vākyaṃ,",
"thi-ap20:38.2": "paṭhamaṃ phalamajjhagaṃ;",
"thi-ap20:38.3": "Pabbajitvāna naciraṃ,",
"thi-ap20:38.4": "arahattamapāpuṇiṃ.",
"thi-ap20:39.1": "Iddhīsu ca vasī homi,",
"thi-ap20:39.2": "dibbāya sotadhātuyā;",
"thi-ap20:39.3": "Paracittāni jānāmi,",
"thi-ap20:39.4": "satthusāsanakārikā.",
"thi-ap20:40.1": "Pubbenivāsaṃ jānāmi,",
"thi-ap20:40.2": "dibbacakkhu visodhitaṃ;",
"thi-ap20:40.3": "Khepetvā āsave sabbe,",
"thi-ap20:40.4": "visuddhāsiṃ sunimmalā.",
"thi-ap20:41.1": "Tatohaṃ vinayaṃ sabbaṃ,",
"thi-ap20:41.2": "santike sabbadassino;",
"thi-ap20:41.3": "Uggahiṃ sabbavitthāraṃ,",
"thi-ap20:41.4": "byāhariñca yathātathaṃ.",
"thi-ap20:42.1": "Jino tasmiṃ guṇe tuṭṭho,",
"thi-ap20:42.2": "etadagge ṭhapesi maṃ;",
"thi-ap20:42.3": "‘Aggā vinayadhārīnaṃ,",
"thi-ap20:42.4": "paṭācārāva ekikā’.",
"thi-ap20:43.1": "Pariciṇṇo mayā satthā,",
"thi-ap20:43.2": "kataṃ buddhassa sāsanaṃ;",
"thi-ap20:43.3": "Ohito garuko bhāro,",
"thi-ap20:43.4": "bhavanetti samūhatā.",
"thi-ap20:44.1": "Yassatthāya pabbajitā,",
"thi-ap20:44.2": "agārasmānagāriyaṃ;",
"thi-ap20:44.3": "So me attho anuppatto,",
"thi-ap20:44.4": "sabbasaṃyojanakkhayo.",
"thi-ap20:45.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap20:45.4": "viharāmi anāsavā.",
"thi-ap20:46.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap20:46.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap20:47.1": "Paṭisambhidā catasso, … pe …",
"thi-ap20:47.4": "kataṃ buddhassa sāsanaṃ”. #641",
"thi-ap20:48.1": "Itthaṃ sudaṃ paṭācārā bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap20:49.1": "Paṭācārātheriyāpadānaṃ dasamaṃ.",
"thi-ap20:50.1": "Ekūposathikavaggo dutiyo.",
"thi-ap20:51.1": "Tassuddānaṃ",
"thi-ap20:52.1": "Ekūposathikā ceva,",
"thi-ap20:52.2": "saḷalā cātha modakā;",
"thi-ap20:52.3": "Ekāsanā pañcadīpā,",
"thi-ap20:52.4": "naḷamālī ca gotamī.",
"thi-ap20:53.1": "Khemā uppalavaṇṇā ca,",
"thi-ap20:53.2": "paṭācārā ca bhikkhunī;",
"thi-ap20:53.3": "Gāthā satāni pañceva,",
"thi-ap20:53.4": "nava cāpi taduttari."
}