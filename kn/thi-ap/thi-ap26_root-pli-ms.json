{
"thi-ap26:1.1": "Therīapadāna",
"thi-ap26:2.1": "Kuṇḍalakesīvagga",
"thi-ap26:3.1": "6. Soṇātherīapadāna",
"thi-ap26:4.1": "“Padumuttaro nāma jino,",
"thi-ap26:4.2": "sabbadhammāna pāragū;",
"thi-ap26:4.3": "Ito satasahassamhi,",
"thi-ap26:4.4": "kappe uppajji nāyako.",
"thi-ap26:5.1": "Tadā seṭṭhikule jātā,",
"thi-ap26:5.2": "sukhitā pūjitā piyā;",
"thi-ap26:5.3": "Upetvā taṃ munivaraṃ,",
"thi-ap26:5.4": "assosiṃ madhuraṃ vacaṃ.",
"thi-ap26:6.1": "Āraddhavīriyānaggaṃ,",
"thi-ap26:6.2": "vaṇṇesi bhikkhuniṃ jino;",
"thi-ap26:6.3": "Taṃ sutvā muditā hutvā,",
"thi-ap26:6.4": "kāraṃ katvāna satthuno.",
"thi-ap26:7.1": "Abhivādiya sambuddhaṃ,",
"thi-ap26:7.2": "ṭhānaṃ taṃ patthayiṃ tadā;",
"thi-ap26:7.3": "Anumodi mahāvīro,",
"thi-ap26:7.4": "‘sijjhataṃ paṇidhī tava.",
"thi-ap26:8.1": "Satasahassito kappe,",
"thi-ap26:8.2": "okkākakulasambhavo;",
"thi-ap26:8.3": "Gotamo nāma gottena,",
"thi-ap26:8.4": "satthā loke bhavissati.",
"thi-ap26:9.1": "Tassa dhammesu dāyādā,",
"thi-ap26:9.2": "orasā dhammanimmitā;",
"thi-ap26:9.3": "Soṇāti nāma nāmena,",
"thi-ap26:9.4": "hessati satthu sāvikā’.",
"thi-ap26:10.1": "Taṃ sutvā muditā hutvā,",
"thi-ap26:10.2": "yāvajīvaṃ tadā jinaṃ;",
"thi-ap26:10.3": "Mettacittā paricariṃ,",
"thi-ap26:10.4": "paccayehi vināyakaṃ.",
"thi-ap26:11.1": "Tena kammena sukatena,",
"thi-ap26:11.2": "cetanāpaṇidhīhi ca;",
"thi-ap26:11.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap26:11.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap26:12.1": "Pacchime ca bhave dāni,",
"thi-ap26:12.2": "jātā seṭṭhikule ahaṃ;",
"thi-ap26:12.3": "Sāvatthiyaṃ puravare,",
"thi-ap26:12.4": "iddhe phīte mahaddhane.",
"thi-ap26:13.1": "Yadā ca yobbanappattā,",
"thi-ap26:13.2": "gantvā patikulaṃ ahaṃ;",
"thi-ap26:13.3": "Dasa puttāni ajaniṃ,",
"thi-ap26:13.4": "surūpāni visesato.",
"thi-ap26:14.1": "Sukhedhitā ca te sabbe,",
"thi-ap26:14.2": "jananettamanoharā;",
"thi-ap26:14.3": "Amittānampi rucitā,",
"thi-ap26:14.4": "mama pageva te piyā.",
"thi-ap26:15.1": "Tato mayhaṃ akāmāya,",
"thi-ap26:15.2": "dasaputtapurakkhato;",
"thi-ap26:15.3": "Pabbajittha sa me bhattā,",
"thi-ap26:15.4": "devadevassa sāsane.",
"thi-ap26:16.1": "Tadekikā vicintesiṃ,",
"thi-ap26:16.2": "‘jīvitenālamatthu me;",
"thi-ap26:16.3": "Cattāya patiputtehi,",
"thi-ap26:16.4": "vuḍḍhāya ca varākiyā.",
"thi-ap26:17.1": "Ahampi tattha gacchissaṃ,",
"thi-ap26:17.2": "sampatto yattha me pati’;",
"thi-ap26:17.3": "Evāhaṃ cintayitvāna,",
"thi-ap26:17.4": "pabbajiṃ anagāriyaṃ.",
"thi-ap26:18.1": "Tato ca maṃ bhikkhuniyo,",
"thi-ap26:18.2": "ekaṃ bhikkhunupassaye;",
"thi-ap26:18.3": "Vihāya gacchumovādaṃ,",
"thi-ap26:18.4": "‘tāpehi udakaṃ’ iti.",
"thi-ap26:19.1": "Tadā udakamāhitvā,",
"thi-ap26:19.2": "okiritvāna kumbhiyā;",
"thi-ap26:19.3": "Culle ṭhapetvā āsīnā,",
"thi-ap26:19.4": "tato cittaṃ samādahiṃ.",
"thi-ap26:20.1": "Khandhe aniccato disvā,",
"thi-ap26:20.2": "dukkhato ca anattato;",
"thi-ap26:20.3": "Khepetvā āsave sabbe,",
"thi-ap26:20.4": "arahattamapāpuṇiṃ.",
"thi-ap26:21.1": "Tadāgantvā bhikkhuniyo,",
"thi-ap26:21.2": "uṇhodakamapucchisuṃ;",
"thi-ap26:21.3": "Tejodhātumadhiṭṭhāya,",
"thi-ap26:21.4": "khippaṃ santāpayiṃ jalaṃ.",
"thi-ap26:22.1": "Vimhitā tā jinavaraṃ,",
"thi-ap26:22.2": "etamatthamasāvayuṃ;",
"thi-ap26:22.3": "Taṃ sutvā mudito nātho,",
"thi-ap26:22.4": "imaṃ gāthaṃ abhāsatha.",
"thi-ap26:23.1": "‘Yo ca vassasataṃ jīve,",
"thi-ap26:23.2": "kusīto hīnavīriyo;",
"thi-ap26:23.3": "Ekāhaṃ jīvitaṃ seyyo,",
"thi-ap26:23.4": "vīriyamārabhato daḷhaṃ’.",
"thi-ap26:24.1": "Ārādhito mahāvīro,",
"thi-ap26:24.2": "mayā suppaṭipattiyā;",
"thi-ap26:24.3": "Āraddhavīriyānaggaṃ,",
"thi-ap26:24.4": "mamāha sa mahāmuni.",
"thi-ap26:25.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap26:25.4": "viharāmi anāsavā.",
"thi-ap26:26.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap26:26.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap26:27.1": "Paṭisambhidā catasso, … pe …",
"thi-ap26:27.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap26:28.1": "Itthaṃ sudaṃ soṇā bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap26:29.1": "Soṇātheriyāpadānaṃ chaṭṭhaṃ."
}