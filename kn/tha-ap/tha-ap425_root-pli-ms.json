{
"tha-ap425:1.1": "Therāpadāna",
"tha-ap425:2.1": "Sakiṃsammajjakavagga",
"tha-ap425:3.1": "3. Ekāsanadāyakattheraapadāna",
"tha-ap425:4.1": "“Himavantassāvidūre,",
"tha-ap425:4.2": "gosito nāma pabbato;",
"tha-ap425:4.3": "Assamo sukato mayhaṃ,",
"tha-ap425:4.4": "paṇṇasālā sumāpitā.",
"tha-ap425:5.1": "Nārado nāma nāmena,",
"tha-ap425:5.2": "kassapo iti maṃ vidū;",
"tha-ap425:5.3": "Suddhimaggaṃ gavesanto,",
"tha-ap425:5.4": "vasāmi gosite tadā.",
"tha-ap425:6.1": "Padumuttaro nāma jino,",
"tha-ap425:6.2": "sabbadhammāna pāragū;",
"tha-ap425:6.3": "Vivekakāmo sambuddho,",
"tha-ap425:6.4": "agañchi anilañjasā.",
"tha-ap425:7.1": "Vanagge gacchamānassa,",
"tha-ap425:7.2": "disvā raṃsiṃ mahesino;",
"tha-ap425:7.3": "Kaṭṭhamañcaṃ paññāpetvā,",
"tha-ap425:7.4": "ajinañca apatthariṃ.",
"tha-ap425:8.1": "Āsanaṃ paññapetvāna,",
"tha-ap425:8.2": "sire katvāna añjaliṃ;",
"tha-ap425:8.3": "Somanassaṃ paveditvā,",
"tha-ap425:8.4": "idaṃ vacanamabraviṃ.",
"tha-ap425:9.1": "‘Sallakatto mahāvīra,",
"tha-ap425:9.2": "āturānaṃ tikicchako;",
"tha-ap425:9.3": "Mamaṃ rogaparetassa,",
"tha-ap425:9.4": "tikicchaṃ dehi nāyaka.",
"tha-ap425:10.1": "Kallatthikā ye passanti,",
"tha-ap425:10.2": "buddhaseṭṭha tuvaṃ mune;",
"tha-ap425:10.3": "Dhuvatthasiddhiṃ papponti,",
"tha-ap425:10.4": "etesaṃ ajaro bhave.",
"tha-ap425:11.1": "Na me deyyadhammo atthi,",
"tha-ap425:11.2": "pavattaphalabhojihaṃ;",
"tha-ap425:11.3": "Idaṃ me āsanaṃ atthi,",
"tha-ap425:11.4": "nisīda kaṭṭhamañcake’.",
"tha-ap425:12.1": "Nisīdi tattha bhagavā,",
"tha-ap425:12.2": "asambhītova kesarī;",
"tha-ap425:12.3": "Muhuttaṃ vītināmetvā,",
"tha-ap425:12.4": "idaṃ vacanamabravi.",
"tha-ap425:13.1": "‘Vissattho hohi mā bhāyi,",
"tha-ap425:13.2": "laddho jotiraso tayā;",
"tha-ap425:13.3": "Yaṃ tuyhaṃ patthitaṃ sabbaṃ,",
"tha-ap425:13.4": "paripūrissatināgate.",
"tha-ap425:14.1": "Na moghaṃ taṃ kataṃ tuyhaṃ,",
"tha-ap425:14.2": "puññakkhette anuttare;",
"tha-ap425:14.3": "Sakkā uddharituṃ attā,",
"tha-ap425:14.4": "yassa cittaṃ paṇīhitaṃ.",
"tha-ap425:15.1": "Imināsanadānena,",
"tha-ap425:15.2": "cetanāpaṇidhīhi ca;",
"tha-ap425:15.3": "Kappasatasahassāni,",
"tha-ap425:15.4": "vinipātaṃ na gacchasi.",
"tha-ap425:16.1": "Paññāsakkhattuṃ devindo,",
"tha-ap425:16.2": "devarajjaṃ karissasi;",
"tha-ap425:16.3": "Asītikkhattuṃ rājā ca,",
"tha-ap425:16.4": "cakkavattī bhavissasi.",
"tha-ap425:17.1": "Padesarajjaṃ vipulaṃ,",
"tha-ap425:17.2": "gaṇanāto asaṅkhiyaṃ;",
"tha-ap425:17.3": "Sabbattha sukhito hutvā,",
"tha-ap425:17.4": "saṃsāre saṃsarissasi’.",
"tha-ap425:18.1": "Idaṃ vatvāna sambuddho,",
"tha-ap425:18.2": "jalajuttamanāmako;",
"tha-ap425:18.3": "Nabhaṃ abbhuggamī vīro,",
"tha-ap425:18.4": "haṃsarājāva ambare.",
"tha-ap425:19.1": "Hatthiyānaṃ assayānaṃ,",
"tha-ap425:19.2": "sarathaṃ sandamānikaṃ;",
"tha-ap425:19.3": "Labhāmi sabbamevetaṃ,",
"tha-ap425:19.4": "ekāsanassidaṃ phalaṃ.",
"tha-ap425:20.1": "Kānanaṃ pavisitvāpi,",
"tha-ap425:20.2": "yadā icchāmi āsanaṃ;",
"tha-ap425:20.3": "Mama saṅkappamaññāya,",
"tha-ap425:20.4": "pallaṅko upatiṭṭhati.",
"tha-ap425:21.1": "Vārimajjhagato santo,",
"tha-ap425:21.2": "yadā icchāmi āsanaṃ;",
"tha-ap425:21.3": "Mama saṅkappamaññāya,",
"tha-ap425:21.4": "pallaṅko upatiṭṭhati.",
"tha-ap425:22.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap425:22.2": "devattaṃ atha mānusaṃ;",
"tha-ap425:22.3": "Pallaṅkasatasahassāni,",
"tha-ap425:22.4": "parivārenti maṃ sadā.",
"tha-ap425:23.1": "Duve bhave saṃsarāmi,",
"tha-ap425:23.2": "devatte atha mānuse;",
"tha-ap425:23.3": "Duve kule pajāyāmi,",
"tha-ap425:23.4": "khattiye atha brāhmaṇe.",
"tha-ap425:24.1": "Ekāsanaṃ daditvāna,",
"tha-ap425:24.2": "puññakkhette anuttare;",
"tha-ap425:24.3": "Dhammapallaṅkamādāya,",
"tha-ap425:24.4": "viharāmi anāsavo.",
"tha-ap425:25.1": "Satasahassito kappe,",
"tha-ap425:25.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap425:25.3": "Duggatiṃ nābhijānāmi,",
"tha-ap425:25.4": "ekāsanassidaṃ phalaṃ.",
"tha-ap425:26.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap425:26.4": "viharāmi anāsavo.",
"tha-ap425:27.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap425:27.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap425:28.1": "Paṭisambhidā catasso, … pe …",
"tha-ap425:28.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap425:29.1": "Itthaṃ sudaṃ āyasmā ekāsanadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap425:30.1": "Ekāsanadāyakattherassāpadānaṃ tatiyaṃ."
}