{
"tha-ap539:1.1": "Therāpadāna",
"tha-ap539:2.1": "Kaccāyanavagga",
"tha-ap539:3.1": "7 Mahākoṭṭhikattheraapadāna",
"tha-ap539:4.1": "“Padumuttaro nāma jino,",
"tha-ap539:4.2": "sabbalokavidū muni;",
"tha-ap539:4.3": "Ito satasahassamhi,",
"tha-ap539:4.4": "kappe uppajji cakkhumā.",
"tha-ap539:5.1": "Ovādako viññāpako,",
"tha-ap539:5.2": "tārako sabbapāṇinaṃ;",
"tha-ap539:5.3": "Desanākusalo buddho,",
"tha-ap539:5.4": "tāresi janataṃ bahuṃ.",
"tha-ap539:6.1": "Anukampako kāruṇiko,",
"tha-ap539:6.2": "hitesī sabbapāṇinaṃ;",
"tha-ap539:6.3": "Sampatte titthiye sabbe,",
"tha-ap539:6.4": "pañcasīle patiṭṭhapi.",
"tha-ap539:7.1": "Evaṃ nirākulaṃ āsi,",
"tha-ap539:7.2": "suññataṃ titthiyehi ca;",
"tha-ap539:7.3": "Vicittaṃ arahantehi,",
"tha-ap539:7.4": "vasībhūtehi tādibhi.",
"tha-ap539:8.1": "Ratanānaṭṭhapaññāsaṃ,",
"tha-ap539:8.2": "uggato so mahāmuni;",
"tha-ap539:8.3": "Kañcanagghiyasaṅkāso,",
"tha-ap539:8.4": "bāttiṃsavaralakkhaṇo.",
"tha-ap539:9.1": "Vassasatasahassāni,",
"tha-ap539:9.2": "āyu vijjati tāvade;",
"tha-ap539:9.3": "Tāvatā tiṭṭhamāno so,",
"tha-ap539:9.4": "tāresi janataṃ bahuṃ.",
"tha-ap539:10.1": "Tadāhaṃ haṃsavatiyaṃ,",
"tha-ap539:10.2": "brāhmaṇo vedapāragū;",
"tha-ap539:10.3": "Upecca sabbalokaggaṃ,",
"tha-ap539:10.4": "assosiṃ dhammadesanaṃ.",
"tha-ap539:11.1": "Tadā so sāvakaṃ vīro,",
"tha-ap539:11.2": "pabhinnamatigocaraṃ;",
"tha-ap539:11.3": "Atthe dhamme nirutte ca,",
"tha-ap539:11.4": "paṭibhāne ca kovidaṃ.",
"tha-ap539:12.1": "Ṭhapesi etadaggamhi,",
"tha-ap539:12.2": "taṃ sutvā mudito ahaṃ;",
"tha-ap539:12.3": "Sasāvakaṃ jinavaraṃ,",
"tha-ap539:12.4": "sattāhaṃ bhojayiṃ tadā.",
"tha-ap539:13.1": "Dussehacchādayitvāna,",
"tha-ap539:13.2": "sasissaṃ buddhisāgaraṃ;",
"tha-ap539:13.3": "Nipacca pādamūlamhi,",
"tha-ap539:13.4": "taṃ ṭhānaṃ patthayiṃ ahaṃ.",
"tha-ap539:14.1": "Tato avoca lokaggo,",
"tha-ap539:14.2": "‘passathetaṃ dijuttamaṃ;",
"tha-ap539:14.3": "Vinataṃ pādamūle me,",
"tha-ap539:14.4": "kamalodarasappabhaṃ.",
"tha-ap539:15.1": "Buddhaseṭṭhassa bhikkhussa,",
"tha-ap539:15.2": "Ṭhānaṃ patthayate ayaṃ;",
"tha-ap539:15.3": "Tāya saddhāya cāgena,",
"tha-ap539:15.4": "Saddhammassavanena ca.",
"tha-ap539:16.1": "Sabbattha sukhito hutvā,",
"tha-ap539:16.2": "saṃsaritvā bhavābhave;",
"tha-ap539:16.3": "Anāgatamhi addhāne,",
"tha-ap539:16.4": "lacchase taṃ manorathaṃ.",
"tha-ap539:17.1": "Satasahassito kappe,",
"tha-ap539:17.2": "okkākakulasambhavo;",
"tha-ap539:17.3": "Gotamo nāma gottena,",
"tha-ap539:17.4": "satthā loke bhavissati.",
"tha-ap539:18.1": "Tassa dhammesu dāyādo,",
"tha-ap539:18.2": "oraso dhammanimmito;",
"tha-ap539:18.3": "Koṭṭhiko nāma nāmena,",
"tha-ap539:18.4": "hessati satthu sāvako’.",
"tha-ap539:19.1": "Taṃ sutvā mudito hutvā,",
"tha-ap539:19.2": "yāvajīvaṃ tadā jinaṃ;",
"tha-ap539:19.3": "Mettacitto paricariṃ,",
"tha-ap539:19.4": "sato paññāsamāhito.",
"tha-ap539:20.1": "Tena kammavipākena,",
"tha-ap539:20.2": "cetanāpaṇidhīhi ca;",
"tha-ap539:20.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap539:20.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap539:21.1": "Satānaṃ tīṇikkhattuñca,",
"tha-ap539:21.2": "devarajjamakārayiṃ;",
"tha-ap539:21.3": "Satānaṃ pañcakkhattuñca,",
"tha-ap539:21.4": "cakkavattī ahosahaṃ.",
"tha-ap539:22.1": "Padesarajjaṃ vipulaṃ,",
"tha-ap539:22.2": "gaṇanāto asaṅkhiyaṃ;",
"tha-ap539:22.3": "Sabbattha sukhito āsiṃ,",
"tha-ap539:22.4": "tassa kammassa vāhasā.",
"tha-ap539:23.1": "Duve bhave saṃsarāmi,",
"tha-ap539:23.2": "devatte atha mānuse;",
"tha-ap539:23.3": "Aññaṃ gatiṃ na gacchāmi,",
"tha-ap539:23.4": "suciṇṇassa idaṃ phalaṃ.",
"tha-ap539:24.1": "Duve kule pajāyāmi,",
"tha-ap539:24.2": "khattiye atha brāhmaṇe;",
"tha-ap539:24.3": "Nīce kule na jāyāmi,",
"tha-ap539:24.4": "suciṇṇassa idaṃ phalaṃ.",
"tha-ap539:25.1": "Pacchime bhave sampatte,",
"tha-ap539:25.2": "brahmabandhu ahosahaṃ;",
"tha-ap539:25.3": "Sāvatthiyaṃ vippakule,",
"tha-ap539:25.4": "paccājāto mahaddhane.",
"tha-ap539:26.1": "Mātā candavatī nāma,",
"tha-ap539:26.2": "pitā me assalāyano;",
"tha-ap539:26.3": "Yadā me pitaraṃ buddho,",
"tha-ap539:26.4": "vinayī sabbasuddhiyā.",
"tha-ap539:27.1": "Tadā pasanno sugate,",
"tha-ap539:27.2": "pabbajiṃ anagāriyaṃ;",
"tha-ap539:27.3": "Moggallāno ācariyo,",
"tha-ap539:27.4": "upajjhā sārisambhavo.",
"tha-ap539:28.1": "Kesesu chijjamānesu,",
"tha-ap539:28.2": "diṭṭhi chinnā samūlikā;",
"tha-ap539:28.3": "Nivāsento ca kāsāvaṃ,",
"tha-ap539:28.4": "arahattamapāpuṇiṃ.",
"tha-ap539:29.1": "Atthadhammaniruttīsu,",
"tha-ap539:29.2": "paṭibhāne ca me mati;",
"tha-ap539:29.3": "Pabhinnā tena lokaggo,",
"tha-ap539:29.4": "etadagge ṭhapesi maṃ.",
"tha-ap539:30.1": "Asandiṭṭhaṃ viyākāsiṃ,",
"tha-ap539:30.2": "upatissena pucchito;",
"tha-ap539:30.3": "Paṭisambhidāsu tenāhaṃ,",
"tha-ap539:30.4": "aggo sambuddhasāsane.",
"tha-ap539:31.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap539:31.4": "viharāmi anāsavo.",
"tha-ap539:32.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap539:32.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap539:33.1": "Paṭisambhidā catasso, … pe …",
"tha-ap539:33.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap539:34.1": "Itthaṃ sudaṃ āyasmā mahākoṭṭhiko thero imā gāthāyo abhāsitthāti.",
"tha-ap539:35.1": "Mahākoṭṭhikattherassāpadānaṃ sattamaṃ."
}