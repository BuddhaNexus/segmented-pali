{
"tha-ap221:1.1": "Therāpadāna",
"tha-ap221:2.1": "Hatthivagga",
"tha-ap221:3.1": "9. Sappidāyakattheraapadāna",
"tha-ap221:4.1": "“Nisinno pāsādavare,",
"tha-ap221:4.2": "nārīgaṇapurakkhato;",
"tha-ap221:4.3": "Byādhitaṃ samaṇaṃ disvā,",
"tha-ap221:4.4": "abhināmesahaṃ gharaṃ.",
"tha-ap221:5.1": "Upaviṭṭhaṃ mahāvīraṃ,",
"tha-ap221:5.2": "devadevaṃ narāsabhaṃ;",
"tha-ap221:5.3": "Sappitelaṃ mayā dinnaṃ,",
"tha-ap221:5.4": "siddhatthassa mahesino.",
"tha-ap221:6.1": "Passaddhadarathaṃ disvā,",
"tha-ap221:6.2": "vippasannamukhindriyaṃ;",
"tha-ap221:6.3": "Vanditvā satthuno pāde,",
"tha-ap221:6.4": "anusaṃsāvayiṃ pure.",
"tha-ap221:7.1": "Disvā maṃ suppasannattaṃ,",
"tha-ap221:7.2": "iddhiyā pāramiṅgato;",
"tha-ap221:7.3": "Nabhaṃ abbhuggamī dhīro,",
"tha-ap221:7.4": "haṃsarājāva ambare.",
"tha-ap221:8.1": "Catunnavutito kappe,",
"tha-ap221:8.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap221:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap221:8.4": "sappitelassidaṃ phalaṃ.",
"tha-ap221:9.1": "Ito sattarase kappe,",
"tha-ap221:9.2": "jutideva sanāmako;",
"tha-ap221:9.3": "Sattaratanasampanno,",
"tha-ap221:9.4": "cakkavattī mahabbalo.",
"tha-ap221:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap221:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap221:11.1": "Itthaṃ sudaṃ āyasmā sappidāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap221:12.1": "Sappidāyakattherassāpadānaṃ navamaṃ."
}