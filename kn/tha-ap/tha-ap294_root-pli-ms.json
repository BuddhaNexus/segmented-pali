{
"tha-ap294:1.1": "Therāpadāna",
"tha-ap294:2.1": "Citakapūjakavagga",
"tha-ap294:3.1": "2. Pupphadhārakattheraapadāna",
"tha-ap294:4.1": "“Vākacīradharo āsiṃ,",
"tha-ap294:4.2": "ajinuttaravāsano;",
"tha-ap294:4.3": "Abhiññā pañca nibbattā,",
"tha-ap294:4.4": "candassa parimajjako.",
"tha-ap294:5.1": "Vipassiṃ lokapajjotaṃ,",
"tha-ap294:5.2": "disvā abhigataṃ mamaṃ;",
"tha-ap294:5.3": "Pāricchattakapupphāni,",
"tha-ap294:5.4": "dhāresiṃ satthuno ahaṃ.",
"tha-ap294:6.1": "Ekanavutito kappe,",
"tha-ap294:6.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap294:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap294:6.4": "dhāraṇāya idaṃ phalaṃ.",
"tha-ap294:7.1": "Sattāsītimhito kappe,",
"tha-ap294:7.2": "eko āsiṃ mahīpati;",
"tha-ap294:7.3": "Samantadhāraṇo nāma,",
"tha-ap294:7.4": "cakkavattī mahabbalo.",
"tha-ap294:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap294:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap294:9.1": "Itthaṃ sudaṃ āyasmā pupphadhārako thero imā gāthāyo abhāsitthāti.",
"tha-ap294:10.1": "Pupphadhārakattherassāpadānaṃ dutiyaṃ."
}