{
"tha-ap312:1.1": "Therāpadāna",
"tha-ap312:2.1": "Padumakesaravagga",
"tha-ap312:3.1": "10. Pabbhāradāyakattheraapadāna",
"tha-ap312:4.1": "“Piyadassino bhagavato,",
"tha-ap312:4.2": "pabbhāro sodhito mayā;",
"tha-ap312:4.3": "Ghaṭakañca upaṭṭhāsiṃ,",
"tha-ap312:4.4": "paribhogāya tādino.",
"tha-ap312:5.1": "Taṃ me buddho viyākāsi,",
"tha-ap312:5.2": "piyadassī mahāmuni;",
"tha-ap312:5.3": "Sahassakaṇḍo satabheṇḍu,",
"tha-ap312:5.4": "dhajālu haritāmayo.",
"tha-ap312:6.1": "Nibbattissati so yūpo,",
"tha-ap312:6.2": "ratanañca anappakaṃ;",
"tha-ap312:6.3": "Pabbhāradānaṃ datvāna,",
"tha-ap312:6.4": "kappaṃ saggamhi modahaṃ.",
"tha-ap312:7.1": "Ito bāttiṃsakappamhi,",
"tha-ap312:7.2": "susuddho nāma khattiyo;",
"tha-ap312:7.3": "Sattaratanasampanno,",
"tha-ap312:7.4": "cakkavattī mahabbalo.",
"tha-ap312:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap312:8.4": "kataṃ buddhassa sāsanaṃ”. #2763",
"tha-ap312:9.1": "Itthaṃ sudaṃ āyasmā pabbhāradāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap312:10.1": "Pabbhāradāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap312:11.1": "Padumakesaravaggo ekatiṃsatimo.",
"tha-ap312:12.1": "Tassuddānaṃ",
"tha-ap312:13.1": "Kesaraṃ gandhamannañca,",
"tha-ap312:13.2": "dhammasaññī phalena ca;",
"tha-ap312:13.3": "Pasādārāmadāyī ca,",
"tha-ap312:13.4": "lepako buddhasaññako;",
"tha-ap312:13.5": "Pabbhārado ca gāthāyo,",
"tha-ap312:13.6": "ekapaññāsa kittitā."
}