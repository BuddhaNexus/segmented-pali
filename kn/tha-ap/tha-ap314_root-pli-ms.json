{
"tha-ap314:1.1": "Therāpadāna",
"tha-ap314:2.1": "Ārakkhadāyakavagga",
"tha-ap314:3.1": "2. Bhojanadāyakattheraapadāna",
"tha-ap314:4.1": "“Sujāto sālalaṭṭhīva,",
"tha-ap314:4.2": "sobhañjanamivuggato;",
"tha-ap314:4.3": "Indalaṭṭhirivākāse,",
"tha-ap314:4.4": "virocati sadā jino.",
"tha-ap314:5.1": "Tassa devātidevassa,",
"tha-ap314:5.2": "vessabhussa mahesino;",
"tha-ap314:5.3": "Adāsi bhojanamahaṃ,",
"tha-ap314:5.4": "vippasannena cetasā.",
"tha-ap314:6.1": "Taṃ me buddho anumodi,",
"tha-ap314:6.2": "sayambhū aparājito;",
"tha-ap314:6.3": "Bhave nibbattamānamhi,",
"tha-ap314:6.4": "phalaṃ nibbattatū tava.",
"tha-ap314:7.1": "Ekattiṃse ito kappe,",
"tha-ap314:7.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap314:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap314:7.4": "bhojanassa idaṃ phalaṃ.",
"tha-ap314:8.1": "Pañcavīse ito kappe,",
"tha-ap314:8.2": "eko āsiṃ amittako;",
"tha-ap314:8.3": "Sattaratanasampanno,",
"tha-ap314:8.4": "cakkavattī mahabbalo.",
"tha-ap314:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap314:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap314:10.1": "Itthaṃ sudaṃ āyasmā bhojanadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap314:11.1": "Bhojanadāyakattherassāpadānaṃ dutiyaṃ."
}