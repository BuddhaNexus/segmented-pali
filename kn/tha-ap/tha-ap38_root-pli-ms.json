{
"tha-ap38:1.1": "Therāpadāna",
"tha-ap38:2.1": "Kuṇḍadhānavagga",
"tha-ap38:3.1": "6 Adhimuttattheraapadāna",
"tha-ap38:4.1": "“Nibbute lokanāthamhi,",
"tha-ap38:4.2": "atthadassīnaruttame;",
"tha-ap38:4.3": "Upaṭṭhahiṃ bhikkhusaṃghaṃ,",
"tha-ap38:4.4": "vippasannena cetasā.",
"tha-ap38:5.1": "Nimantetvā bhikkhusaṃghaṃ,",
"tha-ap38:5.2": "Ujubhūtaṃ samāhitaṃ;",
"tha-ap38:5.3": "Ucchunā maṇḍapaṃ katvā,",
"tha-ap38:5.4": "Bhojesiṃ saṃghamuttamaṃ.",
"tha-ap38:6.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap38:6.2": "devattaṃ atha mānusaṃ;",
"tha-ap38:6.3": "Sabbe satte abhibhomi,",
"tha-ap38:6.4": "puññakammassidaṃ phalaṃ.",
"tha-ap38:7.1": "Aṭṭhārase kappasate,",
"tha-ap38:7.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap38:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap38:7.4": "ucchudānassidaṃ phalaṃ.",
"tha-ap38:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap38:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap38:9.1": "Itthaṃ sudaṃ āyasmā adhimutto thero imā gāthāyo abhāsitthāti.",
"tha-ap38:10.1": "Adhimuttattherassāpadānaṃ chaṭṭhaṃ."
}