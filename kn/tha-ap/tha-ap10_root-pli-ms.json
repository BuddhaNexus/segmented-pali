{
"tha-ap10:1.1": "Therāpadāna",
"tha-ap10:2.1": "Buddhavagga",
"tha-ap10:3.1": "10. Piṇḍolabhāradvājattheraapadāna",
"tha-ap10:4.1": "“Padumuttaro nāma jino,",
"tha-ap10:4.2": "sayambhū aggapuggalo;",
"tha-ap10:4.3": "Purato himavantassa,",
"tha-ap10:4.4": "cittakūṭe vasī tadā.",
"tha-ap10:5.1": "Abhītarūpo tatthāsiṃ,",
"tha-ap10:5.2": "migarājā catukkamo;",
"tha-ap10:5.3": "Tassa saddaṃ suṇitvāna,",
"tha-ap10:5.4": "vikkhambhanti bahujjanā.",
"tha-ap10:6.1": "Suphullaṃ padumaṃ gayha,",
"tha-ap10:6.2": "upagacchiṃ narāsabhaṃ;",
"tha-ap10:6.3": "Vuṭṭhitassa samādhimhā,",
"tha-ap10:6.4": "buddhassa abhiropayiṃ.",
"tha-ap10:7.1": "Catuddisaṃ namassitvā,",
"tha-ap10:7.2": "buddhaseṭṭhaṃ naruttamaṃ;",
"tha-ap10:7.3": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap10:7.4": "sīhanādaṃ nadiṃ ahaṃ.",
"tha-ap10:8.1": "Padumuttaro lokavidū,",
"tha-ap10:8.2": "āhutīnaṃ paṭiggaho;",
"tha-ap10:8.3": "Sakāsane nisīditvā,",
"tha-ap10:8.4": "imā gāthā abhāsatha.",
"tha-ap10:9.1": "Buddhassa giramaññāya,",
"tha-ap10:9.2": "Sabbe devā samāgatā;",
"tha-ap10:9.3": "‘Āgato vadataṃ seṭṭho,",
"tha-ap10:9.4": "Dhammaṃ sossāma taṃ mayaṃ’.",
"tha-ap10:10.1": "Tesaṃ hāsaparetānaṃ,",
"tha-ap10:10.2": "purato lokanāyako;",
"tha-ap10:10.3": "Mama saddaṃ pakittesi,",
"tha-ap10:10.4": "dīghadassī mahāmuni.",
"tha-ap10:11.1": "Yenidaṃ padumaṃ dinnaṃ,",
"tha-ap10:11.2": "sīhanādo ca nādito;",
"tha-ap10:11.3": "Tamahaṃ kittayissāmi,",
"tha-ap10:11.4": "suṇātha mama bhāsato.",
"tha-ap10:12.1": "Ito aṭṭhamake kappe,",
"tha-ap10:12.2": "cakkavattī bhavissati;",
"tha-ap10:12.3": "Sattaratanasampanno,",
"tha-ap10:12.4": "catudīpamhi issaro.",
"tha-ap10:13.1": "Kārayissati issariyaṃ,",
"tha-ap10:13.2": "mahiyā catusaṭṭhiyā;",
"tha-ap10:13.3": "Padumo nāma nāmena,",
"tha-ap10:13.4": "cakkavattī mahabbalo.",
"tha-ap10:14.1": "Kappasatasahassamhi,",
"tha-ap10:14.2": "okkākakulasambhavo;",
"tha-ap10:14.3": "Gotamo nāma gottena,",
"tha-ap10:14.4": "satthā loke bhavissati.",
"tha-ap10:15.1": "Pakāsite pāvacane,",
"tha-ap10:15.2": "brahmabandhu bhavissati;",
"tha-ap10:15.3": "Brahmaññā abhinikkhamma,",
"tha-ap10:15.4": "pabbajissati tāvade.",
"tha-ap10:16.1": "Padhānapahitatto so,",
"tha-ap10:16.2": "upasanto nirūpadhi;",
"tha-ap10:16.3": "Sabbāsave pariññāya,",
"tha-ap10:16.4": "nibbāyissatināsavo.",
"tha-ap10:17.1": "Vijane pantaseyyamhi,",
"tha-ap10:17.2": "vāḷamigasamākule;",
"tha-ap10:17.3": "Sabbāsave pariññāya,",
"tha-ap10:17.4": "nibbāyissatināsavo.",
"tha-ap10:18.1": "Paṭisambhidā catasso,",
"tha-ap10:18.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap10:18.3": "Chaḷabhiññā sacchikatā,",
"tha-ap10:18.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap10:19.1": "Itthaṃ sudaṃ āyasmā piṇḍolabhāradvājo thero imā gāthāyo abhāsitthāti.",
"tha-ap10:20.1": "Piṇḍolabhāradvājattherassāpadānaṃ aṭṭhamaṃ."
}