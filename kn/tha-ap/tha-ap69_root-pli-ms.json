{
"tha-ap69:1.1": "Therāpadāna",
"tha-ap69:2.1": "Sakacintaniyavagga",
"tha-ap69:3.1": "7. Vatthadāyakattheraapadāna",
"tha-ap69:4.1": "“Pakkhijāto tadā āsiṃ,",
"tha-ap69:4.2": "supaṇṇo garuḷādhipo;",
"tha-ap69:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap69:4.4": "gacchantaṃ gandhamādanaṃ.",
"tha-ap69:5.1": "Jahitvā garuḷavaṇṇaṃ,",
"tha-ap69:5.2": "māṇavakaṃ adhārayiṃ;",
"tha-ap69:5.3": "Ekaṃ vatthaṃ mayā dinnaṃ,",
"tha-ap69:5.4": "dvipadindassa tādino.",
"tha-ap69:6.1": "Tañca dussaṃ paṭiggayha,",
"tha-ap69:6.2": "buddho lokagganāyako;",
"tha-ap69:6.3": "Antalikkhe ṭhito satthā,",
"tha-ap69:6.4": "imā gāthā abhāsatha.",
"tha-ap69:7.1": "‘Iminā vatthadānena,",
"tha-ap69:7.2": "cittassa paṇidhīhi ca;",
"tha-ap69:7.3": "Pahāya garuḷaṃ yoniṃ,",
"tha-ap69:7.4": "devaloke ramissati’.",
"tha-ap69:8.1": "Atthadassī tu bhagavā,",
"tha-ap69:8.2": "lokajeṭṭho narāsabho;",
"tha-ap69:8.3": "Vatthadānaṃ pasaṃsitvā,",
"tha-ap69:8.4": "pakkāmi uttarāmukho.",
"tha-ap69:9.1": "Bhave nibbattamānamhi,",
"tha-ap69:9.2": "honti me vatthasampadā;",
"tha-ap69:9.3": "Ākāse chadanaṃ hoti,",
"tha-ap69:9.4": "vatthadānassidaṃ phalaṃ.",
"tha-ap69:10.1": "Aruṇavā satta janā,",
"tha-ap69:10.2": "cakkavattī mahabbalā;",
"tha-ap69:10.3": "Chattiṃsatimhi āsiṃsu,",
"tha-ap69:10.4": "kappamhi manujādhipā.",
"tha-ap69:11.1": "Paṭisambhidā catasso, … pe …",
"tha-ap69:11.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap69:12.1": "Itthaṃ sudaṃ āyasmā vatthadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap69:13.1": "Vatthadāyakattherassāpadānaṃ sattamaṃ."
}