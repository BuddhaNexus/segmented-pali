{
"tha-ap530:1.1": "Therāpadāna",
"tha-ap530:2.1": "Tiṇadāyakavagga",
"tha-ap530:3.1": "8. Bodhisammajjakattheraapadāna",
"tha-ap530:4.1": "“Ahaṃ pure bodhipattaṃ,",
"tha-ap530:4.2": "ujjhitaṃ cetiyaṅgaṇe;",
"tha-ap530:4.3": "Taṃ gahetvāna chaḍḍesiṃ,",
"tha-ap530:4.4": "alabhiṃ vīsatīguṇe.",
"tha-ap530:5.1": "Tassa kammassa tejena,",
"tha-ap530:5.2": "saṃsaranto bhavābhave;",
"tha-ap530:5.3": "Duve bhave saṃsarāmi,",
"tha-ap530:5.4": "devatte cāpi mānuse.",
"tha-ap530:6.1": "Devalokā cavitvāna,",
"tha-ap530:6.2": "āgantvā mānusaṃ bhavaṃ;",
"tha-ap530:6.3": "Duve kule pajāyāmi,",
"tha-ap530:6.4": "khattiye cāpi brāhmaṇe.",
"tha-ap530:7.1": "Aṅgapaccaṅgasampanno,",
"tha-ap530:7.2": "ārohapariṇāhavā;",
"tha-ap530:7.3": "Abhirūpo suci homi,",
"tha-ap530:7.4": "sampuṇṇaṅgo anūnako.",
"tha-ap530:8.1": "Devaloke manusse vā,",
"tha-ap530:8.2": "jāto vā yattha katthaci;",
"tha-ap530:8.3": "Bhave suvaṇṇavaṇṇo ca,",
"tha-ap530:8.4": "uttattakanakūpamo.",
"tha-ap530:9.1": "Mudukā maddavā sniddhā,",
"tha-ap530:9.2": "sukhumā sukumārikā;",
"tha-ap530:9.3": "Chavi me sabbadā hoti,",
"tha-ap530:9.4": "bodhipatte suchaḍḍite.",
"tha-ap530:10.1": "Yato kutoci gatīsu,",
"tha-ap530:10.2": "sarīre samudāgate;",
"tha-ap530:10.3": "Na limpati rajojallaṃ,",
"tha-ap530:10.4": "vipāko pattachaḍḍite.",
"tha-ap530:11.1": "Uṇhe vātātape tassa,",
"tha-ap530:11.2": "aggitāpena vā pana;",
"tha-ap530:11.3": "Gatte sedā na muccanti,",
"tha-ap530:11.4": "vipāko pattachaḍḍite.",
"tha-ap530:12.1": "Kuṭṭhaṃ gaṇḍo kilāso ca,",
"tha-ap530:12.2": "tilakā piḷakā tathā;",
"tha-ap530:12.3": "Na honti kāye daddu ca,",
"tha-ap530:12.4": "vipāko pattachaḍḍite.",
"tha-ap530:13.1": "Aparampi guṇaṃ tassa,",
"tha-ap530:13.2": "nibbattati bhavābhave;",
"tha-ap530:13.3": "Rogā na honti kāyasmiṃ,",
"tha-ap530:13.4": "vipāko pattachaḍḍite.",
"tha-ap530:14.1": "Aparampi guṇaṃ tassa,",
"tha-ap530:14.2": "nibbattati bhavābhave;",
"tha-ap530:14.3": "Na hoti cittajā pīḷā,",
"tha-ap530:14.4": "vipāko pattachaḍḍite.",
"tha-ap530:15.1": "Aparampi guṇaṃ tassa,",
"tha-ap530:15.2": "nibbattati bhavābhave;",
"tha-ap530:15.3": "Amittā na bhavantassa,",
"tha-ap530:15.4": "vipāko pattachaḍḍite.",
"tha-ap530:16.1": "Aparampi guṇaṃ tassa,",
"tha-ap530:16.2": "nibbattati bhavābhave;",
"tha-ap530:16.3": "Anūnabhogo bhavati,",
"tha-ap530:16.4": "vipāko pattachaḍḍite.",
"tha-ap530:17.1": "Aparampi guṇaṃ tassa,",
"tha-ap530:17.2": "nibbattati bhavābhave;",
"tha-ap530:17.3": "Aggirājūhi corehi,",
"tha-ap530:17.4": "na hoti udake bhayaṃ.",
"tha-ap530:18.1": "Aparampi guṇaṃ tassa,",
"tha-ap530:18.2": "nibbattati bhavābhave;",
"tha-ap530:18.3": "Dāsidāsā anucarā,",
"tha-ap530:18.4": "honti cittānuvattakā.",
"tha-ap530:19.1": "Yamhi āyuppamāṇamhi,",
"tha-ap530:19.2": "jāyate mānuse bhave;",
"tha-ap530:19.3": "Tato na hāyate āyu,",
"tha-ap530:19.4": "tiṭṭhate yāvatāyukaṃ.",
"tha-ap530:20.1": "Abbhantarā ca bāhirā,",
"tha-ap530:20.2": "negamā ca saraṭṭhakā;",
"tha-ap530:20.3": "Nuyuttā honti sabbepi,",
"tha-ap530:20.4": "vuddhikāmā sukhicchakā.",
"tha-ap530:21.1": "Bhogavā yasavā homi,",
"tha-ap530:21.2": "sirimā ñātipakkhavā;",
"tha-ap530:21.3": "Apetabhayasantāso,",
"tha-ap530:21.4": "bhavehaṃ sabbato bhave.",
"tha-ap530:22.1": "Devā manussā asurā,",
"tha-ap530:22.2": "gandhabbā yakkharakkhasā;",
"tha-ap530:22.3": "Sabbe te parirakkhanti,",
"tha-ap530:22.4": "bhave saṃsarato sadā.",
"tha-ap530:23.1": "Devaloke manusse ca,",
"tha-ap530:23.2": "anubhotvā ubho yase;",
"tha-ap530:23.3": "Avasāne ca nibbānaṃ,",
"tha-ap530:23.4": "sivaṃ patto anuttaraṃ.",
"tha-ap530:24.1": "Sambuddhamuddisitvāna,",
"tha-ap530:24.2": "bodhiṃ vā tassa satthuno;",
"tha-ap530:24.3": "Yo puññaṃ pasave poso,",
"tha-ap530:24.4": "tassa kiṃ nāma dullabhaṃ.",
"tha-ap530:25.1": "Magge phale āgame ca,",
"tha-ap530:25.2": "jhānābhiññāguṇesu ca;",
"tha-ap530:25.3": "Aññesaṃ adhiko hutvā,",
"tha-ap530:25.4": "nibbāyāmi anāsavo.",
"tha-ap530:26.1": "Purehaṃ bodhiyā pattaṃ,",
"tha-ap530:26.2": "chaḍḍetvā haṭṭhamānaso;",
"tha-ap530:26.3": "Imehi vīsataṅgehi,",
"tha-ap530:26.4": "samaṅgī homi sabbadā.",
"tha-ap530:27.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap530:27.4": "viharāmi anāsavo.",
"tha-ap530:28.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap530:28.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap530:29.1": "Paṭisambhidā catasso, … pe …",
"tha-ap530:29.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap530:30.1": "Itthaṃ sudaṃ āyasmā bodhisammajjako thero imā gāthāyo abhāsitthāti.",
"tha-ap530:31.1": "Bodhisammajjakattherassāpadānaṃ aṭṭhamaṃ."
}