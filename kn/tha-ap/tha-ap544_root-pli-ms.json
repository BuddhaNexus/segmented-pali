{
"tha-ap544:1.1": "Therāpadāna",
"tha-ap544:2.1": "Bhaddiyavagga",
"tha-ap544:3.1": "2. Kaṅkhārevatattheraapadāna",
"tha-ap544:4.1": "“Padumuttaro nāma jino,",
"tha-ap544:4.2": "sabbadhammesu cakkhumā;",
"tha-ap544:4.3": "Ito satasahassamhi,",
"tha-ap544:4.4": "kappe uppajji nāyako.",
"tha-ap544:5.1": "Sīhahanu brahmagiro,",
"tha-ap544:5.2": "haṃsadundubhinissano;",
"tha-ap544:5.3": "Nāgavikkantagamano,",
"tha-ap544:5.4": "candasūrādikappabho.",
"tha-ap544:6.1": "Mahāmatī mahāvīro,",
"tha-ap544:6.2": "mahājhāyī mahābalo;",
"tha-ap544:6.3": "Mahākāruṇiko nātho,",
"tha-ap544:6.4": "mahātamapanūdano.",
"tha-ap544:7.1": "Sa kadāci tilokaggo,",
"tha-ap544:7.2": "veneyyaṃ vinayaṃ bahuṃ;",
"tha-ap544:7.3": "Dhammaṃ desesi sambuddho,",
"tha-ap544:7.4": "sattāsayavidū muni.",
"tha-ap544:8.1": "Jhāyiṃ jhānarataṃ vīraṃ,",
"tha-ap544:8.2": "upasantaṃ anāvilaṃ;",
"tha-ap544:8.3": "Vaṇṇayanto parisatiṃ,",
"tha-ap544:8.4": "tosesi janataṃ jino.",
"tha-ap544:9.1": "Tadāhaṃ haṃsavatiyaṃ,",
"tha-ap544:9.2": "brāhmaṇo vedapāragū;",
"tha-ap544:9.3": "Dhammaṃ sutvāna mudito,",
"tha-ap544:9.4": "taṃ ṭhānamabhipatthayiṃ.",
"tha-ap544:10.1": "Tadā jino viyākāsi,",
"tha-ap544:10.2": "saṃghamajjhe vināyako;",
"tha-ap544:10.3": "‘Mudito hohi tvaṃ brahme,",
"tha-ap544:10.4": "lacchase taṃ manorathaṃ.",
"tha-ap544:11.1": "Satasahassito kappe,",
"tha-ap544:11.2": "okkākakulasambhavo;",
"tha-ap544:11.3": "Gotamo nāma gottena,",
"tha-ap544:11.4": "satthā loke bhavissati.",
"tha-ap544:12.1": "Tassa dhammesu dāyādo,",
"tha-ap544:12.2": "oraso dhammanimmito;",
"tha-ap544:12.3": "Revato nāma nāmena,",
"tha-ap544:12.4": "hessati satthu sāvako’.",
"tha-ap544:13.1": "Tena kammena sukatena,",
"tha-ap544:13.2": "cetanāpaṇidhīhi ca;",
"tha-ap544:13.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap544:13.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap544:14.1": "Pacchime ca bhave dāni,",
"tha-ap544:14.2": "jātohaṃ koliye pure;",
"tha-ap544:14.3": "Khattiye kulasampanne,",
"tha-ap544:14.4": "iddhe phīte mahaddhane.",
"tha-ap544:15.1": "Yadā kapilavatthusmiṃ,",
"tha-ap544:15.2": "buddho dhammamadesayi;",
"tha-ap544:15.3": "Tadā pasanno sugate,",
"tha-ap544:15.4": "pabbajiṃ anagāriyaṃ.",
"tha-ap544:16.1": "Kaṅkhā me bahulā āsi,",
"tha-ap544:16.2": "kappākappe tahiṃ tahiṃ;",
"tha-ap544:16.3": "Sabbaṃ taṃ vinayī buddho,",
"tha-ap544:16.4": "desetvā dhammamuttamaṃ.",
"tha-ap544:17.1": "Tatohaṃ tiṇṇasaṃsāro,",
"tha-ap544:17.2": "sadā jhānasukhe rato;",
"tha-ap544:17.3": "Viharāmi tadā buddho,",
"tha-ap544:17.4": "maṃ disvā etadabravi.",
"tha-ap544:18.1": "‘Yā kāci kaṅkhā idha vā huraṃ vā,",
"tha-ap544:18.2": "Sakavediyā vā paravediyā vā;",
"tha-ap544:18.3": "Ye jhāyino tā pajahanti sabbā,",
"tha-ap544:18.4": "Ātāpino brahmacariyaṃ carantā’.",
"tha-ap544:19.1": "Satasahasse kataṃ kammaṃ,",
"tha-ap544:19.2": "phalaṃ dassesi me idha;",
"tha-ap544:19.3": "Sumutto saravegova,",
"tha-ap544:19.4": "kilese jhāpayiṃ mama.",
"tha-ap544:20.1": "Tato jhānarataṃ disvā,",
"tha-ap544:20.2": "buddho lokantagū muni;",
"tha-ap544:20.3": "Jhāyīnaṃ bhikkhūnaṃ aggo,",
"tha-ap544:20.4": "paññāpeti mahāmati.",
"tha-ap544:21.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap544:21.4": "viharāmi anāsavo.",
"tha-ap544:22.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap544:22.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap544:23.1": "Paṭisambhidā catasso, … pe …",
"tha-ap544:23.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap544:24.1": "Itthaṃ sudaṃ āyasmā kaṅkhārevato thero imā gāthāyo abhāsitthāti.",
"tha-ap544:25.1": "Kaṅkhārevatattherassāpadānaṃ dutiyaṃ."
}