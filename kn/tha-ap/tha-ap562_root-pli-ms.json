{
"tha-ap562:1.1": "Therāpadāna",
"tha-ap562:2.1": "Yasavagga",
"tha-ap562:3.1": "10. Upavānattheraapadāna",
"tha-ap562:4.1": "“Padumuttaro nāma jino,",
"tha-ap562:4.2": "sabbadhammāna pāragū;",
"tha-ap562:4.3": "Jalitvā aggikkhandhova,",
"tha-ap562:4.4": "sambuddho parinibbuto.",
"tha-ap562:5.1": "Mahājanā samāgamma,",
"tha-ap562:5.2": "pūjayitvā tathāgataṃ;",
"tha-ap562:5.3": "Citakaṃ katvā sugataṃ,",
"tha-ap562:5.4": "sarīraṃ abhiropayuṃ.",
"tha-ap562:6.1": "Sarīrakiccaṃ katvāna,",
"tha-ap562:6.2": "dhātuṃ tattha samānayuṃ;",
"tha-ap562:6.3": "Sadevamanussā sabbe,",
"tha-ap562:6.4": "buddhathūpaṃ akaṃsu te.",
"tha-ap562:7.1": "Paṭhamā kañcanamayā,",
"tha-ap562:7.2": "dutiyā ca maṇimayā;",
"tha-ap562:7.3": "Tatiyā rūpiyamayā,",
"tha-ap562:7.4": "catutthī phalikāmayā.",
"tha-ap562:8.1": "Tattha pañcamikā ceva,",
"tha-ap562:8.2": "lohitaṅkamayā ahu;",
"tha-ap562:8.3": "Chaṭṭhā masāragallassa,",
"tha-ap562:8.4": "sabbaṃ ratanamayūpari.",
"tha-ap562:9.1": "Jaṅghā maṇimayā āsi,",
"tha-ap562:9.2": "vedikā ratanāmayā;",
"tha-ap562:9.3": "Sabbasoṇṇamayo thūpo,",
"tha-ap562:9.4": "uddhaṃ yojanamuggato.",
"tha-ap562:10.1": "Devā tattha samāgantvā,",
"tha-ap562:10.2": "ekato mantayuṃ tadā;",
"tha-ap562:10.3": "‘Mayampi thūpaṃ kassāma,",
"tha-ap562:10.4": "lokanāthassa tādino.",
"tha-ap562:11.1": "Dhātu āveṇikā natthi,",
"tha-ap562:11.2": "sarīraṃ ekapiṇḍitaṃ;",
"tha-ap562:11.3": "Imamhi buddhathūpamhi,",
"tha-ap562:11.4": "kassāma kañcukaṃ mayaṃ’.",
"tha-ap562:12.1": "Devā sattahi ratnehi,",
"tha-ap562:12.2": "aññaṃ vaḍḍhesuṃ yojanaṃ;",
"tha-ap562:12.3": "Thūpo dviyojanubbedho,",
"tha-ap562:12.4": "timiraṃ byapahanti so.",
"tha-ap562:13.1": "Nāgā tattha samāgantvā,",
"tha-ap562:13.2": "ekato mantayuṃ tadā;",
"tha-ap562:13.3": "‘Manussā ceva devā ca,",
"tha-ap562:13.4": "buddhathūpaṃ akaṃsu te.",
"tha-ap562:14.1": "Mā no pamattā assumha,",
"tha-ap562:14.2": "appamattā sadevakā;",
"tha-ap562:14.3": "Mayampi thūpaṃ kassāma,",
"tha-ap562:14.4": "lokanāthassa tādino’.",
"tha-ap562:15.1": "Indanīlaṃ mahānīlaṃ,",
"tha-ap562:15.2": "atho jotirasaṃ maṇiṃ;",
"tha-ap562:15.3": "Ekato sannipātetvā,",
"tha-ap562:15.4": "buddhathūpaṃ achādayuṃ.",
"tha-ap562:16.1": "Sabbaṃ maṇimayaṃ āsi,",
"tha-ap562:16.2": "yāvatā buddhacetiyaṃ;",
"tha-ap562:16.3": "Tiyojanasamubbedhaṃ,",
"tha-ap562:16.4": "ālokakaraṇaṃ tadā.",
"tha-ap562:17.1": "Garuḷā ca samāgantvā,",
"tha-ap562:17.2": "ekato mantayuṃ tadā;",
"tha-ap562:17.3": "‘Manussā devanāgā ca,",
"tha-ap562:17.4": "buddhapūjaṃ akaṃsu te.",
"tha-ap562:18.1": "Mā no pamattā assumha,",
"tha-ap562:18.2": "appamattā sadevakā;",
"tha-ap562:18.3": "Mayampi thūpaṃ kassāma,",
"tha-ap562:18.4": "lokanāthassa tādino’.",
"tha-ap562:19.1": "Sabbaṃ maṇimayaṃ thūpaṃ,",
"tha-ap562:19.2": "akaruṃ te ca kañcukaṃ;",
"tha-ap562:19.3": "Yojanaṃ tepi vaḍḍhesuṃ,",
"tha-ap562:19.4": "āyataṃ buddhacetiyaṃ.",
"tha-ap562:20.1": "Catuyojanamubbedho,",
"tha-ap562:20.2": "buddhathūpo virocati;",
"tha-ap562:20.3": "Obhāseti disā sabbā,",
"tha-ap562:20.4": "sataraṃsīva uggato.",
"tha-ap562:21.1": "Kumbhaṇḍā ca samāgantvā,",
"tha-ap562:21.2": "ekato mantayuṃ tadā;",
"tha-ap562:21.3": "‘Manussā ceva devā ca,",
"tha-ap562:21.4": "nāgā ca garuḷā tathā.",
"tha-ap562:22.1": "Paccekaṃ buddhaseṭṭhassa,",
"tha-ap562:22.2": "akaṃsu thūpamuttamaṃ;",
"tha-ap562:22.3": "Mā no pamattā assumha,",
"tha-ap562:22.4": "appamattā sadevakā.",
"tha-ap562:23.1": "Mayampi thūpaṃ kassāma,",
"tha-ap562:23.2": "lokanāthassa tādino;",
"tha-ap562:23.3": "Ratanehi chādessāma,",
"tha-ap562:23.4": "āyataṃ buddhacetiyaṃ’.",
"tha-ap562:24.1": "Yojanaṃ tepi vaḍḍhesuṃ,",
"tha-ap562:24.2": "āyataṃ buddhacetiyaṃ;",
"tha-ap562:24.3": "Pañcayojanamubbedho,",
"tha-ap562:24.4": "thūpo obhāsate tadā.",
"tha-ap562:25.1": "Yakkhā tattha samāgantvā,",
"tha-ap562:25.2": "ekato mantayuṃ tadā;",
"tha-ap562:25.3": "‘Manussā devanāgā ca,",
"tha-ap562:25.4": "garuḷā ca kumbhaṇḍakā.",
"tha-ap562:26.1": "Paccekaṃ buddhaseṭṭhassa,",
"tha-ap562:26.2": "akaṃsu thūpamuttamaṃ;",
"tha-ap562:26.3": "Mā no pamattā assumha,",
"tha-ap562:26.4": "appamattā sadevakā.",
"tha-ap562:27.1": "Mayampi thūpaṃ kassāma,",
"tha-ap562:27.2": "lokanāthassa tādino;",
"tha-ap562:27.3": "Phalikā chādayissāma,",
"tha-ap562:27.4": "āyataṃ buddhacetiyaṃ’.",
"tha-ap562:28.1": "Yojanaṃ tepi vaḍḍhesuṃ,",
"tha-ap562:28.2": "āyataṃ buddhacetiyaṃ;",
"tha-ap562:28.3": "Chayojanikamubbedho,",
"tha-ap562:28.4": "thūpo obhāsate tadā.",
"tha-ap562:29.1": "Gandhabbā ca samāgantvā,",
"tha-ap562:29.2": "ekato mantayuṃ tadā;",
"tha-ap562:29.3": "‘Manujā devatā nāgā,",
"tha-ap562:29.4": "kumbhaṇḍā guyhakā tathā.",
"tha-ap562:30.1": "Sabbe akaṃsu buddhathūpaṃ,",
"tha-ap562:30.2": "mayamettha akārakā;",
"tha-ap562:30.3": "Mayampi thūpaṃ kassāma,",
"tha-ap562:30.4": "lokanāthassa tādino’.",
"tha-ap562:31.1": "Vediyo satta katvāna,",
"tha-ap562:31.2": "dhajaṃ chattaṃ akaṃsu te;",
"tha-ap562:31.3": "Sabbasoṇṇamayaṃ thūpaṃ,",
"tha-ap562:31.4": "gandhabbā kārayuṃ tadā.",
"tha-ap562:32.1": "Sattayojanamubbedho,",
"tha-ap562:32.2": "thūpo obhāsate tadā;",
"tha-ap562:32.3": "Rattindivā na ñāyanti,",
"tha-ap562:32.4": "āloko hoti sabbadā.",
"tha-ap562:33.1": "Abhibhonti na tassābhā,",
"tha-ap562:33.2": "candasūrā satārakā;",
"tha-ap562:33.3": "Samantā yojanasate,",
"tha-ap562:33.4": "padīpopi na pajjali.",
"tha-ap562:34.1": "Tena kālena ye keci,",
"tha-ap562:34.2": "thūpaṃ pūjenti mānusā;",
"tha-ap562:34.3": "Na te thūpaṃ āruhanti,",
"tha-ap562:34.4": "ambare ukkhipanti te.",
"tha-ap562:35.1": "Devehi ṭhapito yakkho,",
"tha-ap562:35.2": "abhisammatanāmako;",
"tha-ap562:35.3": "Dhajaṃ vā pupphadāmaṃ vā,",
"tha-ap562:35.4": "abhiropeti uttariṃ.",
"tha-ap562:36.1": "Na te passanti taṃ yakkhaṃ,",
"tha-ap562:36.2": "dāmaṃ passanti gacchato;",
"tha-ap562:36.3": "Evaṃ passitvā gacchantā,",
"tha-ap562:36.4": "sabbe gacchanti suggatiṃ.",
"tha-ap562:37.1": "Viruddhā ye pāvacane,",
"tha-ap562:37.2": "pasannā ye ca sāsane;",
"tha-ap562:37.3": "Pāṭihīraṃ daṭṭhukāmā,",
"tha-ap562:37.4": "thūpaṃ pūjenti mānusā.",
"tha-ap562:38.1": "Nagare haṃsavatiyā,",
"tha-ap562:38.2": "ahosiṃ bhatako tadā;",
"tha-ap562:38.3": "Āmoditaṃ janaṃ disvā,",
"tha-ap562:38.4": "evaṃ cintesahaṃ tadā.",
"tha-ap562:39.1": "‘Uḷāro bhagavā neso,",
"tha-ap562:39.2": "yassa dhātughare disaṃ;",
"tha-ap562:39.3": "Imā ca janatā tuṭṭhā,",
"tha-ap562:39.4": "kāraṃ kubbaṃ na tappare.",
"tha-ap562:40.1": "Ahampi kāraṃ kassāmi,",
"tha-ap562:40.2": "lokanāthassa tādino;",
"tha-ap562:40.3": "Tassa dhammesu dāyādo,",
"tha-ap562:40.4": "bhavissāmi anāgate’.",
"tha-ap562:41.1": "Sudhotaṃ rajakenāhaṃ,",
"tha-ap562:41.2": "uttareyyaṃ paṭaṃ mama;",
"tha-ap562:41.3": "Veḷagge ālaggetvāna,",
"tha-ap562:41.4": "dhajaṃ ukkhipimambare.",
"tha-ap562:42.1": "Abhisammatako gayha,",
"tha-ap562:42.2": "ambare hāsi me dhajaṃ;",
"tha-ap562:42.3": "Vāteritaṃ dhajaṃ disvā,",
"tha-ap562:42.4": "bhiyyo hāsaṃ janesahaṃ.",
"tha-ap562:43.1": "Tattha cittaṃ pasādetvā,",
"tha-ap562:43.2": "samaṇaṃ upasaṅkamiṃ;",
"tha-ap562:43.3": "Taṃ bhikkhuṃ abhivādetvā,",
"tha-ap562:43.4": "vipākaṃ pucchahaṃ dhaje.",
"tha-ap562:44.1": "So me kathesi ānandī,",
"tha-ap562:44.2": "pītisañjananaṃ mama;",
"tha-ap562:44.3": "‘Tassa dhajassa vipākaṃ,",
"tha-ap562:44.4": "anubhossasi sabbadā.",
"tha-ap562:45.1": "Hatthiassarathāpattī,",
"tha-ap562:45.2": "senā ca caturaṅginī;",
"tha-ap562:45.3": "Parivāressanti taṃ niccaṃ,",
"tha-ap562:45.4": "dhajadānassidaṃ phalaṃ.",
"tha-ap562:46.1": "Saṭṭhituriyasahassāni,",
"tha-ap562:46.2": "bheriyo samalaṅkatā;",
"tha-ap562:46.3": "Parivāressanti taṃ niccaṃ,",
"tha-ap562:46.4": "dhajadānassidaṃ phalaṃ.",
"tha-ap562:47.1": "Chaḷasītisahassāni,",
"tha-ap562:47.2": "nāriyo samalaṅkatā;",
"tha-ap562:47.3": "Vicittavatthābharaṇā,",
"tha-ap562:47.4": "āmukkamaṇikuṇḍalā.",
"tha-ap562:48.1": "Aḷārapamhā hasulā,",
"tha-ap562:48.2": "susaññā tanumajjhimā;",
"tha-ap562:48.3": "Parivāressanti taṃ niccaṃ,",
"tha-ap562:48.4": "dhajadānassidaṃ phalaṃ.",
"tha-ap562:49.1": "Tiṃsakappasahassāni,",
"tha-ap562:49.2": "devaloke ramissasi;",
"tha-ap562:49.3": "Asītikkhattuṃ devindo,",
"tha-ap562:49.4": "devarajjaṃ karissasi.",
"tha-ap562:50.1": "Sahassakkhattuṃ rājā ca,",
"tha-ap562:50.2": "cakkavattī bhavissati;",
"tha-ap562:50.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap562:50.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap562:51.1": "Kappasatasahassamhi,",
"tha-ap562:51.2": "okkākakulasambhavo;",
"tha-ap562:51.3": "Gotamo nāma gottena,",
"tha-ap562:51.4": "satthā loke bhavissati.",
"tha-ap562:52.1": "Devalokā cavitvāna,",
"tha-ap562:52.2": "sukkamūlena codito;",
"tha-ap562:52.3": "Puññakammena saññutto,",
"tha-ap562:52.4": "brahmabandhu bhavissasi.",
"tha-ap562:53.1": "Asītikoṭiṃ chaḍḍetvā,",
"tha-ap562:53.2": "dāse kammakare bahū;",
"tha-ap562:53.3": "Gotamassa bhagavato,",
"tha-ap562:53.4": "sāsane pabbajissasi.",
"tha-ap562:54.1": "Ārādhayitvā sambuddhaṃ,",
"tha-ap562:54.2": "gotamaṃ sakyapuṅgavaṃ;",
"tha-ap562:54.3": "Upavānoti nāmena,",
"tha-ap562:54.4": "hessasi satthu sāvako’.",
"tha-ap562:55.1": "Satasahasse kataṃ kammaṃ,",
"tha-ap562:55.2": "phalaṃ dassesi me idha;",
"tha-ap562:55.3": "Sumutto saravegova,",
"tha-ap562:55.4": "kilese jhāpayiṃ mama.",
"tha-ap562:56.1": "Cakkavattissa santassa,",
"tha-ap562:56.2": "cātuddīpissarassa me;",
"tha-ap562:56.3": "Tīṇi yojanāni sāmantā,",
"tha-ap562:56.4": "ussīyanti dhajā sadā.",
"tha-ap562:57.1": "Satasahassito kappe,",
"tha-ap562:57.2": "yaṃ kammamakariṃ tadā;",
"tha-ap562:57.3": "Duggatiṃ nābhijānāmi,",
"tha-ap562:57.4": "dhajadānassidaṃ phalaṃ.",
"tha-ap562:58.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap562:58.4": "viharāmi anāsavo.",
"tha-ap562:59.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap562:59.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap562:60.1": "Paṭisambhidā catasso, … pe …",
"tha-ap562:60.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap562:61.1": "Itthaṃ sudaṃ āyasmā upavānatthero imā gāthāyo abhāsitthāti.",
"tha-ap562:62.1": "Upavānattherassāpadānaṃ dasamaṃ."
}