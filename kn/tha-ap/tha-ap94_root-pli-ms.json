{
"tha-ap94:1.1": "Therāpadāna",
"tha-ap94:2.1": "Sudhāvagga",
"tha-ap94:3.1": "2 Sucintikattheraapadāna",
"tha-ap94:4.1": "“Tissassa lokanāthassa,",
"tha-ap94:4.2": "suddhapīṭhamadāsahaṃ;",
"tha-ap94:4.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap94:4.4": "buddhassādiccabandhuno.",
"tha-ap94:5.1": "Aṭṭhārase ito kappe,",
"tha-ap94:5.2": "rājā āsiṃ mahāruci;",
"tha-ap94:5.3": "Bhogo ca vipulo āsi,",
"tha-ap94:5.4": "sayanañca anappakaṃ.",
"tha-ap94:6.1": "Pīṭhaṃ buddhassa datvāna,",
"tha-ap94:6.2": "vippasannena cetasā;",
"tha-ap94:6.3": "Anubhomi sakaṃ kammaṃ,",
"tha-ap94:6.4": "pubbe sukatamattano.",
"tha-ap94:7.1": "Dvenavute ito kappe,",
"tha-ap94:7.2": "yaṃ pīṭhamadadiṃ tadā;",
"tha-ap94:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap94:7.4": "pīṭhadānassidaṃ phalaṃ.",
"tha-ap94:8.1": "Aṭṭhatiṃse ito kappe,",
"tha-ap94:8.2": "tayo te cakkavattino;",
"tha-ap94:8.3": "Ruci uparuci ceva,",
"tha-ap94:8.4": "mahāruci tatiyako.",
"tha-ap94:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap94:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap94:10.1": "Itthaṃ sudaṃ āyasmā sucintiko thero imā gāthāyo abhāsitthāti.",
"tha-ap94:11.1": "Sucintikattherassāpadānaṃ dutiyaṃ."
}