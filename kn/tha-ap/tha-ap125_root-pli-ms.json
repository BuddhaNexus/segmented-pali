{
"tha-ap125:1.1": "Therāpadāna",
"tha-ap125:2.1": "Sereyyavagga",
"tha-ap125:3.1": "3 Pāyasadāyakattheraapadāna",
"tha-ap125:4.1": "“Suvaṇṇavaṇṇo sambuddho,",
"tha-ap125:4.2": "Bāttiṃsavaralakkhaṇo;",
"tha-ap125:4.3": "Pavanā abhinikkhanto,",
"tha-ap125:4.4": "Bhikkhusaṃghapurakkhato.",
"tha-ap125:5.1": "Mahaccā kaṃsapātiyā,",
"tha-ap125:5.2": "vaḍḍhetvā pāyasaṃ ahaṃ;",
"tha-ap125:5.3": "Āhutiṃ yiṭṭhukāmo so,",
"tha-ap125:5.4": "upanesiṃ baliṃ ahaṃ.",
"tha-ap125:6.1": "Bhagavā tamhi samaye,",
"tha-ap125:6.2": "lokajeṭṭho narāsabho;",
"tha-ap125:6.3": "Caṅkamaṃ susamārūḷho,",
"tha-ap125:6.4": "ambare anilāyane.",
"tha-ap125:7.1": "Tañca acchariyaṃ disvā,",
"tha-ap125:7.2": "abbhutaṃ lomahaṃsanaṃ;",
"tha-ap125:7.3": "Ṭhapayitvā kaṃsapātiṃ,",
"tha-ap125:7.4": "vipassiṃ abhivādayiṃ.",
"tha-ap125:8.1": "Tuvaṃ devosi sabbaññū,",
"tha-ap125:8.2": "sadeve sahamānuse;",
"tha-ap125:8.3": "Anukampaṃ upādāya,",
"tha-ap125:8.4": "paṭigaṇha mahāmuni.",
"tha-ap125:9.1": "Paṭiggahesi bhagavā,",
"tha-ap125:9.2": "sabbaññū lokanāyako;",
"tha-ap125:9.3": "Mama saṅkappamaññāya,",
"tha-ap125:9.4": "satthā loke mahāmuni.",
"tha-ap125:10.1": "Ekanavutito kappe,",
"tha-ap125:10.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap125:10.3": "Duggatiṃ nābhijānāmi,",
"tha-ap125:10.4": "pāyasassa idaṃ phalaṃ.",
"tha-ap125:11.1": "Ekatālīsito kappe,",
"tha-ap125:11.2": "buddho nāmāsi khattiyo;",
"tha-ap125:11.3": "Sattaratanasampanno,",
"tha-ap125:11.4": "cakkavattī mahabbalo.",
"tha-ap125:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap125:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap125:13.1": "Itthaṃ sudaṃ āyasmā pāyasadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap125:14.1": "Pāyasadāyakattherassāpadānaṃ tatiyaṃ."
}