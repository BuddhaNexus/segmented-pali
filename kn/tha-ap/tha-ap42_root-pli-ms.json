{
"tha-ap42:1.1": "Therāpadāna",
"tha-ap42:2.1": "Kuṇḍadhānavagga",
"tha-ap42:3.1": "10. Kapparukkhiyattheraapadāna",
"tha-ap42:4.1": "“Siddhatthassa bhagavato,",
"tha-ap42:4.2": "thūpaseṭṭhassa sammukhā;",
"tha-ap42:4.3": "Vicittadusse lagetvā,",
"tha-ap42:4.4": "kapparukkhaṃ ṭhapesahaṃ.",
"tha-ap42:5.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap42:5.2": "devattaṃ atha mānusaṃ;",
"tha-ap42:5.3": "Sobhayanto mama dvāraṃ,",
"tha-ap42:5.4": "kapparukkho patiṭṭhati.",
"tha-ap42:6.1": "Ahañca parisā ceva,",
"tha-ap42:6.2": "ye keci mama vassitā;",
"tha-ap42:6.3": "Tamhā dussaṃ gahetvāna,",
"tha-ap42:6.4": "nivāsema mayaṃ sadā.",
"tha-ap42:7.1": "Catunnavutito kappe,",
"tha-ap42:7.2": "yaṃ rukkhaṃ ṭhapayiṃ ahaṃ;",
"tha-ap42:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap42:7.4": "kapparukkhassidaṃ phalaṃ.",
"tha-ap42:8.1": "Ito ca sattame kappe,",
"tha-ap42:8.2": "suceḷā aṭṭha khattiyā;",
"tha-ap42:8.3": "Sattaratanasampannā,",
"tha-ap42:8.4": "cakkavattī mahabbalā.",
"tha-ap42:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap42:9.4": "kataṃ buddhassa sāsanaṃ”. #1103",
"tha-ap42:10.1": "Itthaṃ sudaṃ āyasmā kapparukkhiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap42:11.1": "Kapparukkhiyattherassāpadānaṃ dasamaṃ.",
"tha-ap42:12.1": "Kuṇḍadhānavaggo catuttho.",
"tha-ap42:13.1": "Tassuddānaṃ",
"tha-ap42:14.1": "Kuṇḍasāgatakaccānā,",
"tha-ap42:14.2": "udāyī mogharājako;",
"tha-ap42:14.3": "Adhimutto lasuṇado,",
"tha-ap42:14.4": "āyāgī dhammacakkiko;",
"tha-ap42:14.5": "Kapparukkhī ca dasamo,",
"tha-ap42:14.6": "gāthā dvayadasasataṃ."
}