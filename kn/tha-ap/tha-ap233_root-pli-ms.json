{
"tha-ap233:1.1": "Therāpadāna",
"tha-ap233:2.1": "Udakāsanavagga",
"tha-ap233:3.1": "1. Udakāsanadāyakattheraapadāna",
"tha-ap233:4.1": "“Ārāmadvārā nikkhamma,",
"tha-ap233:4.2": "phalakaṃ santhariṃ ahaṃ;",
"tha-ap233:4.3": "Udakañca upaṭṭhāsiṃ,",
"tha-ap233:4.4": "uttamatthassa pattiyā.",
"tha-ap233:5.1": "Ekattiṃse ito kappe,",
"tha-ap233:5.2": "yaṃ kammamakariṃ tadā;",
"tha-ap233:5.3": "Duggatiṃ nābhijānāmi,",
"tha-ap233:5.4": "āsane codake phalaṃ.",
"tha-ap233:6.1": "Ito pannarase kappe,",
"tha-ap233:6.2": "abhisāmasamavhayo;",
"tha-ap233:6.3": "Sattaratanasampanno,",
"tha-ap233:6.4": "cakkavattī mahabbalo.",
"tha-ap233:7.1": "Paṭisambhidā catasso,",
"tha-ap233:7.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap233:7.3": "Chaḷabhiññā sacchikatā,",
"tha-ap233:7.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap233:8.1": "Itthaṃ sudaṃ āyasmā udakāsanadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap233:9.1": "Udakāsanadāyakattherassāpadānaṃ paṭhamaṃ."
}