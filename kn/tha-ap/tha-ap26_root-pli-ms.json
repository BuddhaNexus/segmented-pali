{
"tha-ap26:1.1": "Therāpadāna",
"tha-ap26:2.1": "Subhūtivagga",
"tha-ap26:3.1": "4. Pañcasīlasamādāniyattheraapadāna",
"tha-ap26:4.1": "“Nagare candavatiyā,",
"tha-ap26:4.2": "bhatako āsahaṃ tadā;",
"tha-ap26:4.3": "Parakammāyane yutto,",
"tha-ap26:4.4": "pabbajjaṃ na labhāmahaṃ.",
"tha-ap26:5.1": "Mahandhakārapihitā,",
"tha-ap26:5.2": "tividhaggīhi ḍayhare;",
"tha-ap26:5.3": "Kena nu kho upāyena,",
"tha-ap26:5.4": "visaṃyutto bhave ahaṃ.",
"tha-ap26:6.1": "Deyyadhammo ca me natthi,",
"tha-ap26:6.2": "varāko bhatako ahaṃ;",
"tha-ap26:6.3": "Yannūnāhaṃ pañcasīlaṃ,",
"tha-ap26:6.4": "rakkheyyaṃ paripūrayaṃ.",
"tha-ap26:7.1": "Anomadassissa munino,",
"tha-ap26:7.2": "nisabho nāma sāvako;",
"tha-ap26:7.3": "Tamahaṃ upasaṅkamma,",
"tha-ap26:7.4": "pañcasikkhāpadaggahiṃ.",
"tha-ap26:8.1": "Vassasatasahassāni,",
"tha-ap26:8.2": "āyu vijjati tāvade;",
"tha-ap26:8.3": "Tāvatā pañcasīlāni,",
"tha-ap26:8.4": "paripuṇṇāni gopayiṃ.",
"tha-ap26:9.1": "Maccukāle ca sampatte,",
"tha-ap26:9.2": "devā assāsayanti maṃ;",
"tha-ap26:9.3": "‘Ratho sahassayutto te,",
"tha-ap26:9.4": "mārisāyaṃ upaṭṭhito’.",
"tha-ap26:10.1": "Vattante carime citte,",
"tha-ap26:10.2": "mama sīlaṃ anussariṃ;",
"tha-ap26:10.3": "Tena kammena sukatena,",
"tha-ap26:10.4": "tāvatiṃsaṃ agacchahaṃ.",
"tha-ap26:11.1": "Tiṃsakkhattuñca devindo,",
"tha-ap26:11.2": "devarajjamakārayiṃ;",
"tha-ap26:11.3": "Dibbasukhaṃ anubhaviṃ,",
"tha-ap26:11.4": "accharāhi purakkhato.",
"tha-ap26:12.1": "Pañcasattatikkhattuñca,",
"tha-ap26:12.2": "cakkavattī ahosahaṃ;",
"tha-ap26:12.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap26:12.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap26:13.1": "Devalokā cavitvāna,",
"tha-ap26:13.2": "sukkamūlena codito;",
"tha-ap26:13.3": "Pure vesāliyaṃ jāto,",
"tha-ap26:13.4": "mahāsāle suaḍḍhake.",
"tha-ap26:14.1": "Vassūpanāyike kāle,",
"tha-ap26:14.2": "dippante jinasāsane;",
"tha-ap26:14.3": "Mātā ca me pitā ceva,",
"tha-ap26:14.4": "pañcasikkhāpadaggahuṃ.",
"tha-ap26:15.1": "Saha sutvānahaṃ sīlaṃ,",
"tha-ap26:15.2": "mama sīlaṃ anussariṃ;",
"tha-ap26:15.3": "Ekāsane nisīditvā,",
"tha-ap26:15.4": "arahattamapāpuṇiṃ.",
"tha-ap26:16.1": "Jātiyā pañcavassena,",
"tha-ap26:16.2": "arahattamapāpuṇiṃ;",
"tha-ap26:16.3": "Upasampādayi buddho,",
"tha-ap26:16.4": "guṇamaññāya cakkhumā.",
"tha-ap26:17.1": "Paripuṇṇāni gopetvā,",
"tha-ap26:17.2": "pañcasikkhāpadānahaṃ;",
"tha-ap26:17.3": "Aparimeyye ito kappe,",
"tha-ap26:17.4": "vinipātaṃ na gacchahaṃ.",
"tha-ap26:18.1": "Svāhaṃ yasamanubhaviṃ,",
"tha-ap26:18.2": "tesaṃ sīlāna vāhasā;",
"tha-ap26:18.3": "Kappakoṭimpi kittento,",
"tha-ap26:18.4": "kittaye ekadesakaṃ.",
"tha-ap26:19.1": "Pañca sīlāni gopetvā,",
"tha-ap26:19.2": "tayo hetū labhāmahaṃ;",
"tha-ap26:19.3": "Dīghāyuko mahābhogo,",
"tha-ap26:19.4": "tikkhapañño bhavāmahaṃ.",
"tha-ap26:20.1": "Saṅkittento ca sabbesaṃ,",
"tha-ap26:20.2": "adhimattañca porisaṃ;",
"tha-ap26:20.3": "Bhavābhave saṃsaritvā,",
"tha-ap26:20.4": "ete ṭhāne labhāmahaṃ.",
"tha-ap26:21.1": "Aparimeyyasīlesu,",
"tha-ap26:21.2": "vattantā jinasāvakā;",
"tha-ap26:21.3": "Bhavesu yadi rajjeyyuṃ,",
"tha-ap26:21.4": "vipāko kīdiso bhave.",
"tha-ap26:22.1": "Suciṇṇaṃ me pañcasīlaṃ,",
"tha-ap26:22.2": "bhatakena tapassinā;",
"tha-ap26:22.3": "Tena sīlenahaṃ ajja,",
"tha-ap26:22.4": "mocayiṃ sabbabandhanā.",
"tha-ap26:23.1": "Aparimeyye ito kappe,",
"tha-ap26:23.2": "pañca sīlāni gopayiṃ;",
"tha-ap26:23.3": "Duggatiṃ nābhijānāmi,",
"tha-ap26:23.4": "pañcasīlānidaṃ phalaṃ.",
"tha-ap26:24.1": "Paṭisambhidā catasso,",
"tha-ap26:24.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap26:24.3": "Chaḷabhiññā sacchikatā,",
"tha-ap26:24.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap26:25.1": "Itthaṃ sudaṃ āyasmā pañcasīlasamādāniyo thero imā gāthāyo abhāsitthāti.",
"tha-ap26:26.1": "Pañcasīlasamādāniyattherassāpadānaṃ catutthaṃ."
}