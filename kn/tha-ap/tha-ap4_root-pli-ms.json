{
"tha-ap4:1.1": "Therāpadāna",
"tha-ap4:2.1": "Buddhavagga",
"tha-ap4:3.1": "4. Mahāmoggallānattheraapadāna",
"tha-ap4:4.1": "“Anomadassī bhagavā,",
"tha-ap4:4.2": "lokajeṭṭho narāsabho;",
"tha-ap4:4.3": "Vihāsi himavantamhi,",
"tha-ap4:4.4": "devasaṅghapurakkhato.",
"tha-ap4:5.1": "Varuṇo nāma nāmena,",
"tha-ap4:5.2": "nāgarājā ahaṃ tadā;",
"tha-ap4:5.3": "Kāmarūpī vikubbāmi,",
"tha-ap4:5.4": "mahodadhinivāsahaṃ.",
"tha-ap4:6.1": "Saṅgaṇiyaṃ gaṇaṃ hitvā,",
"tha-ap4:6.2": "tūriyaṃ paṭṭhapesahaṃ;",
"tha-ap4:6.3": "Sambuddhaṃ parivāretvā,",
"tha-ap4:6.4": "vādesuṃ accharā tadā.",
"tha-ap4:7.1": "Vajjamānesu tūresu,",
"tha-ap4:7.2": "devā tūrāni vajjayuṃ;",
"tha-ap4:7.3": "Ubhinnaṃ saddaṃ sutvāna,",
"tha-ap4:7.4": "buddhopi sampabujjhatha.",
"tha-ap4:8.1": "Nimantetvāna sambuddhaṃ,",
"tha-ap4:8.2": "sakaṃ bhavanupāgamiṃ;",
"tha-ap4:8.3": "Āsanaṃ paññapetvāna,",
"tha-ap4:8.4": "kālamārocayiṃ ahaṃ.",
"tha-ap4:9.1": "Khīṇāsavasahassehi,",
"tha-ap4:9.2": "parivuto lokanāyako;",
"tha-ap4:9.3": "Obhāsento disā sabbā,",
"tha-ap4:9.4": "bhavanaṃ me upāgami.",
"tha-ap4:10.1": "Upaviṭṭhaṃ mahāvīraṃ,",
"tha-ap4:10.2": "Devadevaṃ narāsabhaṃ;",
"tha-ap4:10.3": "Sabhikkhusaṃghaṃ tappesiṃ,",
"tha-ap4:10.4": "Annapānenahaṃ tadā.",
"tha-ap4:11.1": "Anumodi mahāvīro,",
"tha-ap4:11.2": "sayambhū aggapuggalo;",
"tha-ap4:11.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap4:11.4": "imā gāthā abhāsatha.",
"tha-ap4:12.1": "Yo so saṃghaṃ apūjesi,",
"tha-ap4:12.2": "buddhañca lokanāyakaṃ;",
"tha-ap4:12.3": "Tena cittappasādena,",
"tha-ap4:12.4": "devalokaṃ gamissati.",
"tha-ap4:13.1": "Sattasattatikkhattuñca,",
"tha-ap4:13.2": "devarajjaṃ karissati;",
"tha-ap4:13.3": "Pathabyā rajjaṃ aṭṭhasataṃ,",
"tha-ap4:13.4": "vasudhaṃ āvasissati.",
"tha-ap4:14.1": "Pañcapaññāsakkhattuñca,",
"tha-ap4:14.2": "cakkavattī bhavissati;",
"tha-ap4:14.3": "Bhogā asaṅkhiyā tassa,",
"tha-ap4:14.4": "uppajjissanti tāvade.",
"tha-ap4:15.1": "Aparimeyye ito kappe,",
"tha-ap4:15.2": "okkākakulasambhavo;",
"tha-ap4:15.3": "Gotamo nāma gottena,",
"tha-ap4:15.4": "satthā loke bhavissati.",
"tha-ap4:16.1": "Nirayā so cavitvāna,",
"tha-ap4:16.2": "manussataṃ gamissati;",
"tha-ap4:16.3": "Kolito nāma nāmena,",
"tha-ap4:16.4": "brahmabandhu bhavissati.",
"tha-ap4:17.1": "So pacchā pabbajitvāna,",
"tha-ap4:17.2": "kusalamūlena codito;",
"tha-ap4:17.3": "Gotamassa bhagavato,",
"tha-ap4:17.4": "dutiyo hessati sāvako.",
"tha-ap4:18.1": "Āraddhavīriyo pahitatto,",
"tha-ap4:18.2": "Iddhiyā pāramiṃ gato;",
"tha-ap4:18.3": "Sabbāsave pariññāya,",
"tha-ap4:18.4": "Nibbāyissatināsavo.",
"tha-ap4:19.1": "Pāpamittopanissāya,",
"tha-ap4:19.2": "kāmarāgavasaṃ gato;",
"tha-ap4:19.3": "Mātaraṃ pitarañcāpi,",
"tha-ap4:19.4": "ghātayiṃ duṭṭhamānaso.",
"tha-ap4:20.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap4:20.2": "nirayaṃ atha mānusaṃ;",
"tha-ap4:20.3": "Pāpakammasamaṅgitā,",
"tha-ap4:20.4": "bhinnasīso marāmahaṃ.",
"tha-ap4:21.1": "Idaṃ pacchimakaṃ mayhaṃ,",
"tha-ap4:21.2": "carimo vattate bhavo;",
"tha-ap4:21.3": "Idhāpi ediso mayhaṃ,",
"tha-ap4:21.4": "maraṇakāle bhavissati.",
"tha-ap4:22.1": "Pavivekamanuyutto,",
"tha-ap4:22.2": "samādhibhāvanārato;",
"tha-ap4:22.3": "Sabbāsave pariññāya,",
"tha-ap4:22.4": "viharāmi anāsavo.",
"tha-ap4:23.1": "Dharaṇimpi sugambhīraṃ,",
"tha-ap4:23.2": "bahalaṃ duppadhaṃsiyaṃ;",
"tha-ap4:23.3": "Vāmaṅguṭṭhena khobheyyaṃ,",
"tha-ap4:23.4": "iddhiyā pāramiṃ gato.",
"tha-ap4:24.1": "Asmimānaṃ na passāmi,",
"tha-ap4:24.2": "māno mayhaṃ na vijjati;",
"tha-ap4:24.3": "Sāmaṇere upādāya,",
"tha-ap4:24.4": "garucittaṃ karomahaṃ.",
"tha-ap4:25.1": "Aparimeyye ito kappe,",
"tha-ap4:25.2": "yaṃ kammamabhinīhariṃ;",
"tha-ap4:25.3": "Tāhaṃ bhūmimanuppatto,",
"tha-ap4:25.4": "pattomhi āsavakkhayaṃ.",
"tha-ap4:26.1": "Paṭisambhidā catasso,",
"tha-ap4:26.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap4:26.3": "Chaḷabhiññā sacchikatā,",
"tha-ap4:26.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap4:27.1": "Itthaṃ sudaṃ āyasmā mahāmoggallāno thero imā gāthāyo abhāsitthāti.",
"tha-ap4:28.1": "Mahāmoggallānattherassāpadānaṃ dutiyaṃ."
}