{
"tha-ap436:1.1": "Therāpadāna",
"tha-ap436:2.1": "Ekavihārivagga",
"tha-ap436:3.1": "4. Ñāṇatthavikattheraapadāna",
"tha-ap436:4.1": "“Kaṇikāraṃva jalitaṃ,",
"tha-ap436:4.2": "dīparukkhaṃva jotitaṃ;",
"tha-ap436:4.3": "Kañcanaṃva virocantaṃ,",
"tha-ap436:4.4": "addasaṃ dvipaduttamaṃ.",
"tha-ap436:5.1": "Kamaṇḍaluṃ ṭhapetvāna,",
"tha-ap436:5.2": "vākacīrañca kuṇḍikaṃ;",
"tha-ap436:5.3": "Ekaṃsaṃ ajinaṃ katvā,",
"tha-ap436:5.4": "buddhaseṭṭhaṃ thaviṃ ahaṃ.",
"tha-ap436:6.1": "‘Tamandhakāraṃ vidhamaṃ,",
"tha-ap436:6.2": "mohajālasamākulaṃ;",
"tha-ap436:6.3": "Ñāṇālokaṃ dassetvāna,",
"tha-ap436:6.4": "nittiṇṇosi mahāmuni.",
"tha-ap436:7.1": "Samuddharasimaṃ lokaṃ,",
"tha-ap436:7.2": "sabbāvantamanuttaraṃ;",
"tha-ap436:7.3": "Ñāṇe te upamā natthi,",
"tha-ap436:7.4": "yāvatājagatogati.",
"tha-ap436:8.1": "Tena ñāṇena sabbaññū,",
"tha-ap436:8.2": "iti buddho pavuccati;",
"tha-ap436:8.3": "Vandāmi taṃ mahāvīraṃ,",
"tha-ap436:8.4": "sabbaññutamanāvaraṃ’.",
"tha-ap436:9.1": "Satasahassito kappe,",
"tha-ap436:9.2": "buddhaseṭṭhaṃ thaviṃ ahaṃ;",
"tha-ap436:9.3": "Duggatiṃ nābhijānāmi,",
"tha-ap436:9.4": "ñāṇatthavāyidaṃ phalaṃ.",
"tha-ap436:10.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap436:10.4": "viharāmi anāsavo.",
"tha-ap436:11.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap436:11.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap436:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap436:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap436:13.1": "Itthaṃ sudaṃ āyasmā ñāṇatthaviko thero imā gāthāyo abhāsitthāti.",
"tha-ap436:14.1": "Ñāṇatthavikattherassāpadānaṃ catutthaṃ."
}