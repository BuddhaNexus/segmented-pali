{
"tha-ap72:1.1": "Therāpadāna",
"tha-ap72:2.1": "Sakacintaniyavagga",
"tha-ap72:3.1": "10. Pupphacaṅkoṭiyattheraapadāna",
"tha-ap72:4.1": "“Abhītarūpaṃ sīhaṃva,",
"tha-ap72:4.2": "garuḷaggaṃva pakkhinaṃ;",
"tha-ap72:4.3": "Byagghūsabhaṃva pavaraṃ,",
"tha-ap72:4.4": "abhijātaṃva kesariṃ.",
"tha-ap72:5.1": "Sikhiṃ tilokasaraṇaṃ,",
"tha-ap72:5.2": "anejaṃ aparājitaṃ;",
"tha-ap72:5.3": "Nisinnaṃ samaṇānaggaṃ,",
"tha-ap72:5.4": "bhikkhusaṃghapurakkhataṃ.",
"tha-ap72:6.1": "Caṅkoṭake ṭhapetvāna,",
"tha-ap72:6.2": "anojaṃ pupphamuttamaṃ;",
"tha-ap72:6.3": "Saha caṅkoṭakeneva,",
"tha-ap72:6.4": "buddhaseṭṭhaṃ samokiriṃ.",
"tha-ap72:7.1": "Tena cittappasādena,",
"tha-ap72:7.2": "dvipadinda narāsabha;",
"tha-ap72:7.3": "Pattomhi acalaṃ ṭhānaṃ,",
"tha-ap72:7.4": "hitvā jayaparājayaṃ.",
"tha-ap72:8.1": "Ekattiṃse ito kappe,",
"tha-ap72:8.2": "yaṃ kammamakariṃ tadā;",
"tha-ap72:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap72:8.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap72:9.1": "Sampuṇṇe tiṃsakappamhi,",
"tha-ap72:9.2": "devabhūtisanāmakā;",
"tha-ap72:9.3": "Sattaratanasampannā,",
"tha-ap72:9.4": "pañcāsuṃ cakkavattino.",
"tha-ap72:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap72:10.4": "kataṃ buddhassa sāsanaṃ”. #1412",
"tha-ap72:11.1": "Itthaṃ sudaṃ āyasmā pupphacaṅkoṭiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap72:12.1": "Pupphacaṅkoṭiyattherassāpadānaṃ dasamaṃ.",
"tha-ap72:13.1": "Sakacintaniyavaggo sattamo.",
"tha-ap72:14.1": "Tassuddānaṃ",
"tha-ap72:15.1": "Sakacintī avopupphī,",
"tha-ap72:15.2": "sapaccāgamanena ca;",
"tha-ap72:15.3": "Parappasādī bhisado,",
"tha-ap72:15.4": "sucinti vatthadāyako.",
"tha-ap72:16.1": "Ambadāyī ca sumano,",
"tha-ap72:16.2": "pupphacaṅkoṭakīpi ca;",
"tha-ap72:16.3": "Gāthekasattati vuttā,",
"tha-ap72:16.4": "gaṇitā atthadassibhi."
}