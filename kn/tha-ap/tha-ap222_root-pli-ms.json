{
"tha-ap222:1.1": "Therāpadāna",
"tha-ap222:2.1": "Hatthivagga",
"tha-ap222:3.1": "10. Pāpanivāriyattheraapadāna",
"tha-ap222:4.1": "“Piyadassissa bhagavato,",
"tha-ap222:4.2": "caṅkamaṃ sodhitaṃ mayā;",
"tha-ap222:4.3": "Naḷakehi paṭicchannaṃ,",
"tha-ap222:4.4": "vātātapanivāraṇaṃ.",
"tha-ap222:5.1": "Pāpaṃ vivajjanatthāya,",
"tha-ap222:5.2": "kusalassupasampadā;",
"tha-ap222:5.3": "Kilesānaṃ pahānāya,",
"tha-ap222:5.4": "padahiṃ satthu sāsane.",
"tha-ap222:6.1": "Ito ekādase kappe,",
"tha-ap222:6.2": "aggidevoti vissuto;",
"tha-ap222:6.3": "Sattaratanasampanno,",
"tha-ap222:6.4": "cakkavattī mahabbalo.",
"tha-ap222:7.1": "Paṭisambhidā catasso, … pe …",
"tha-ap222:7.4": "kataṃ buddhassa sāsanaṃ”. #2368",
"tha-ap222:8.1": "Itthaṃ sudaṃ āyasmā pāpanivāriyo thero imā gāthāyo abhāsitthāti.",
"tha-ap222:9.1": "Pāpanivāriyattherassāpadānaṃ dasamaṃ.",
"tha-ap222:10.1": "Hatthivaggo bāvīsatimo.",
"tha-ap222:11.1": "Tassuddānaṃ",
"tha-ap222:12.1": "Hatthi pānadhi saccañca,",
"tha-ap222:12.2": "ekasaññi ca raṃsiko;",
"tha-ap222:12.3": "Sandhito tālavaṇṭañca,",
"tha-ap222:12.4": "tathā akkantasaññako;",
"tha-ap222:12.5": "Sappi pāpanivārī ca,",
"tha-ap222:12.6": "catuppaññāsa gāthakāti."
}