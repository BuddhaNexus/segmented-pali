{
"tha-ap61:1.1": "Therāpadāna",
"tha-ap61:2.1": "Bījanivagga",
"tha-ap61:3.1": "9. Padumattheraapadāna",
"tha-ap61:4.1": "“Catusaccaṃ pakāsento,",
"tha-ap61:4.2": "varadhammappavattako;",
"tha-ap61:4.3": "Vassate amataṃ vuṭṭhiṃ,",
"tha-ap61:4.4": "nibbāpento mahājanaṃ.",
"tha-ap61:5.1": "Sadhajaṃ padumaṃ gayha,",
"tha-ap61:5.2": "aḍḍhakose ṭhito ahaṃ;",
"tha-ap61:5.3": "Padumuttaramunissa,",
"tha-ap61:5.4": "pahaṭṭho ukkhipimambare.",
"tha-ap61:6.1": "Āgacchante ca padume,",
"tha-ap61:6.2": "abbhuto āsi tāvade;",
"tha-ap61:6.3": "Mama saṅkappamaññāya,",
"tha-ap61:6.4": "paggaṇhi vadataṃ varo.",
"tha-ap61:7.1": "Karaseṭṭhena paggayha,",
"tha-ap61:7.2": "jalajaṃ pupphamuttamaṃ;",
"tha-ap61:7.3": "Bhikkhusaṃghe ṭhito satthā,",
"tha-ap61:7.4": "imā gāthā abhāsatha.",
"tha-ap61:8.1": "‘Yenidaṃ padumaṃ khittaṃ,",
"tha-ap61:8.2": "sabbaññumhi vināyake;",
"tha-ap61:8.3": "Tamahaṃ kittayissāmi,",
"tha-ap61:8.4": "suṇātha mama bhāsato.",
"tha-ap61:9.1": "Tiṃsakappāni devindo,",
"tha-ap61:9.2": "devarajjaṃ karissati;",
"tha-ap61:9.3": "Pathabyā rajjaṃ sattasataṃ,",
"tha-ap61:9.4": "vasudhaṃ āvasissati.",
"tha-ap61:10.1": "Tattha pattaṃ gaṇetvāna,",
"tha-ap61:10.2": "cakkavattī bhavissati;",
"tha-ap61:10.3": "Ākāsato pupphavuṭṭhi,",
"tha-ap61:10.4": "abhivassissatī tadā.",
"tha-ap61:11.1": "Kappasatasahassamhi,",
"tha-ap61:11.2": "okkākakulasambhavo;",
"tha-ap61:11.3": "Gotamo nāma gottena,",
"tha-ap61:11.4": "satthā loke bhavissati.",
"tha-ap61:12.1": "Tassa dhammesu dāyādo,",
"tha-ap61:12.2": "oraso dhammanimmito;",
"tha-ap61:12.3": "Sabbāsave pariññāya,",
"tha-ap61:12.4": "nibbāyissatināsavo’.",
"tha-ap61:13.1": "Nikkhamitvāna kucchimhā,",
"tha-ap61:13.2": "sampajāno patissato;",
"tha-ap61:13.3": "Jātiyā pañcavassohaṃ,",
"tha-ap61:13.4": "arahattaṃ apāpuṇiṃ.",
"tha-ap61:14.1": "Paṭisambhidā catasso, … pe …",
"tha-ap61:14.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap61:15.1": "Itthaṃ sudaṃ āyasmā padumo thero imā gāthāyo abhāsitthāti.",
"tha-ap61:16.1": "Padumattherassāpadānaṃ navamaṃ."
}