{
"tha-ap113:1.1": "Therāpadāna",
"tha-ap113:2.1": "Mahāparivāravagga",
"tha-ap113:3.1": "1 Mahāparivārakattheraapadāna",
"tha-ap113:4.1": "“Vipassī nāma bhagavā,",
"tha-ap113:4.2": "lokajeṭṭho narāsabho;",
"tha-ap113:4.3": "Aṭṭhasaṭṭhisahassehi,",
"tha-ap113:4.4": "pāvisi bandhumaṃ tadā.",
"tha-ap113:5.1": "Nagarā abhinikkhamma,",
"tha-ap113:5.2": "agamaṃ dīpacetiyaṃ;",
"tha-ap113:5.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap113:5.4": "āhutīnaṃ paṭiggahaṃ.",
"tha-ap113:6.1": "Cullāsītisahassāni,",
"tha-ap113:6.2": "yakkhā mayhaṃ upantike;",
"tha-ap113:6.3": "Upaṭṭhahanti sakkaccaṃ,",
"tha-ap113:6.4": "indaṃva tidasā gaṇā.",
"tha-ap113:7.1": "Bhavanā abhinikkhamma,",
"tha-ap113:7.2": "dussaṃ paggayhahaṃ tadā;",
"tha-ap113:7.3": "Sirasā abhivādesiṃ,",
"tha-ap113:7.4": "tañcādāsiṃ mahesino.",
"tha-ap113:8.1": "Aho buddhā aho dhammā,",
"tha-ap113:8.2": "aho no satthu sampadā;",
"tha-ap113:8.3": "Buddhassa ānubhāvena,",
"tha-ap113:8.4": "vasudhāyaṃ pakampatha.",
"tha-ap113:9.1": "Tañca acchariyaṃ disvā,",
"tha-ap113:9.2": "abbhutaṃ lomahaṃsanaṃ;",
"tha-ap113:9.3": "Buddhe cittaṃ pasādemi,",
"tha-ap113:9.4": "dvipadindamhi tādine.",
"tha-ap113:10.1": "Sohaṃ cittaṃ pasādetvā,",
"tha-ap113:10.2": "dussaṃ datvāna satthuno;",
"tha-ap113:10.3": "Saraṇañca upāgacchiṃ,",
"tha-ap113:10.4": "sāmacco saparijjano.",
"tha-ap113:11.1": "Ekanavutito kappe,",
"tha-ap113:11.2": "yaṃ kammamakariṃ tadā;",
"tha-ap113:11.3": "Duggatiṃ nābhijānāmi,",
"tha-ap113:11.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap113:12.1": "Ito pannarase kappe,",
"tha-ap113:12.2": "soḷasāsuṃ suvāhanā;",
"tha-ap113:12.3": "Sattaratanasampannā,",
"tha-ap113:12.4": "cakkavattī mahabbalā.",
"tha-ap113:13.1": "Paṭisambhidā catasso,",
"tha-ap113:13.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap113:13.3": "Chaḷabhiññā sacchikatā,",
"tha-ap113:13.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap113:14.1": "Itthaṃ sudaṃ āyasmā mahāparivārako thero imā gāthāyo abhāsitthāti.",
"tha-ap113:15.1": "Mahāparivārakattherassāpadānaṃ paṭhamaṃ."
}