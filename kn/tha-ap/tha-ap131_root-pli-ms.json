{
"tha-ap131:1.1": "Therāpadāna",
"tha-ap131:2.1": "Sereyyavagga",
"tha-ap131:3.1": "9 Gaṇṭhipupphiyattheraapadāna",
"tha-ap131:4.1": "“Suvaṇṇavaṇṇo sambuddho,",
"tha-ap131:4.2": "vipassī dakkhiṇāraho;",
"tha-ap131:4.3": "Purakkhato sāvakehi,",
"tha-ap131:4.4": "ārāmā abhinikkhami.",
"tha-ap131:5.1": "Disvānahaṃ buddhaseṭṭhaṃ,",
"tha-ap131:5.2": "sabbaññuṃ tamanāsakaṃ;",
"tha-ap131:5.3": "Pasannacitto sumano,",
"tha-ap131:5.4": "gaṇṭhipupphaṃ apūjayiṃ.",
"tha-ap131:6.1": "Tena cittappasādena,",
"tha-ap131:6.2": "dvipadindassa tādino;",
"tha-ap131:6.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap131:6.4": "puna vandiṃ tathāgataṃ.",
"tha-ap131:7.1": "Ekanavutito kappe,",
"tha-ap131:7.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap131:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap131:7.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap131:8.1": "Ekatālīsito kappe,",
"tha-ap131:8.2": "caraṇo nāma khattiyo;",
"tha-ap131:8.3": "Sattaratanasampanno,",
"tha-ap131:8.4": "cakkavattī mahabbalo.",
"tha-ap131:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap131:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap131:10.1": "Itthaṃ sudaṃ āyasmā gaṇṭhipupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap131:11.1": "Gaṇṭhipupphiyattherassāpadānaṃ navamaṃ."
}