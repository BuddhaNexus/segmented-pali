{
"tha-ap548:1.1": "Therāpadāna",
"tha-ap548:2.1": "Bhaddiyavagga",
"tha-ap548:3.1": "6. Kāḷudāyittheraapadāna",
"tha-ap548:4.1": "“Padumuttaro nāma jino,",
"tha-ap548:4.2": "sabbadhammesu cakkhumā;",
"tha-ap548:4.3": "Ito satasahassamhi,",
"tha-ap548:4.4": "kappe uppajji nāyako.",
"tha-ap548:5.1": "Nāyakānaṃ varo satthā,",
"tha-ap548:5.2": "guṇāguṇavidū jino;",
"tha-ap548:5.3": "Kataññū katavedī ca,",
"tha-ap548:5.4": "titthe yojeti pāṇine.",
"tha-ap548:6.1": "Sabbaññutena ñāṇena,",
"tha-ap548:6.2": "tulayitvā dayāsayo;",
"tha-ap548:6.3": "Deseti pavaraṃ dhammaṃ,",
"tha-ap548:6.4": "anantaguṇasañcayo.",
"tha-ap548:7.1": "Sa kadāci mahāvīro,",
"tha-ap548:7.2": "anantajinasaṃsari;",
"tha-ap548:7.3": "Deseti madhuraṃ dhammaṃ,",
"tha-ap548:7.4": "catusaccūpasañhitaṃ.",
"tha-ap548:8.1": "Sutvāna taṃ dhammavaraṃ,",
"tha-ap548:8.2": "ādimajjhantasobhanaṃ;",
"tha-ap548:8.3": "Pāṇasatasahassānaṃ,",
"tha-ap548:8.4": "dhammābhisamayo ahu.",
"tha-ap548:9.1": "Ninnāditā tadā bhūmi,",
"tha-ap548:9.2": "gajjiṃsu ca payodharā;",
"tha-ap548:9.3": "Sādhukāraṃ pavattiṃsu,",
"tha-ap548:9.4": "devabrahmanarāsurā.",
"tha-ap548:10.1": "‘Aho kāruṇiko satthā,",
"tha-ap548:10.2": "aho saddhammadesanā;",
"tha-ap548:10.3": "Aho bhavasamuddamhi,",
"tha-ap548:10.4": "nimugge uddharī jino’.",
"tha-ap548:11.1": "Evaṃ pavedajātesu,",
"tha-ap548:11.2": "sanarāmarabrahmasu;",
"tha-ap548:11.3": "Kulappasādakānaggaṃ,",
"tha-ap548:11.4": "sāvakaṃ vaṇṇayī jino.",
"tha-ap548:12.1": "Tadāhaṃ haṃsavatiyaṃ,",
"tha-ap548:12.2": "jātomaccakule ahuṃ;",
"tha-ap548:12.3": "Pāsādiko dassaniyo,",
"tha-ap548:12.4": "pahūtadhanadhaññavā.",
"tha-ap548:13.1": "Haṃsārāmamupeccāhaṃ,",
"tha-ap548:13.2": "vanditvā taṃ tathāgataṃ;",
"tha-ap548:13.3": "Suṇitvā madhuraṃ dhammaṃ,",
"tha-ap548:13.4": "kāraṃ katvā ca tādino.",
"tha-ap548:14.1": "Nipacca pādamūlehaṃ,",
"tha-ap548:14.2": "imaṃ vacanamabraviṃ;",
"tha-ap548:14.3": "‘Kulappasādakānaggo,",
"tha-ap548:14.4": "yo tayā santhuto mune.",
"tha-ap548:15.1": "Tādiso homahaṃ vīra,",
"tha-ap548:15.2": "buddhaseṭṭhassa sāsane’;",
"tha-ap548:15.3": "Tadā mahākāruṇiko,",
"tha-ap548:15.4": "siñcanto vāmatena maṃ.",
"tha-ap548:16.1": "Āha maṃ ‘putta uttiṭṭha,",
"tha-ap548:16.2": "lacchase taṃ manorathaṃ;",
"tha-ap548:16.3": "Kathaṃ nāma jine kāraṃ,",
"tha-ap548:16.4": "katvāna viphalo siyā.",
"tha-ap548:17.1": "Satasahassito kappe,",
"tha-ap548:17.2": "okkākakulasambhavo;",
"tha-ap548:17.3": "Gotamo nāma gottena,",
"tha-ap548:17.4": "satthā loke bhavissati.",
"tha-ap548:18.1": "Tassa dhammesu dāyādo,",
"tha-ap548:18.2": "oraso dhammanimmito;",
"tha-ap548:18.3": "Udāyi nāma nāmena,",
"tha-ap548:18.4": "hessati satthu sāvako’.",
"tha-ap548:19.1": "Taṃ sutvā mudito hutvā,",
"tha-ap548:19.2": "yāvajīvaṃ tadā jinaṃ;",
"tha-ap548:19.3": "Mettacitto paricariṃ,",
"tha-ap548:19.4": "paccayehi vināyakaṃ.",
"tha-ap548:20.1": "Tena kammavipākena,",
"tha-ap548:20.2": "cetanāpaṇidhīhi ca;",
"tha-ap548:20.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap548:20.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap548:21.1": "Pacchime ca bhave dāni,",
"tha-ap548:21.2": "ramme kapilavatthave;",
"tha-ap548:21.3": "Jāto mahāmaccakule,",
"tha-ap548:21.4": "suddhodanamahīpate.",
"tha-ap548:22.1": "Tadā ajāyi siddhattho,",
"tha-ap548:22.2": "ramme lumbinikānane;",
"tha-ap548:22.3": "Hitāya sabbalokassa,",
"tha-ap548:22.4": "sukhāya ca narāsabho.",
"tha-ap548:23.1": "Tadaheva ahaṃ jāto,",
"tha-ap548:23.2": "saha teneva vaḍḍhito;",
"tha-ap548:23.3": "Piyo sahāyo dayito,",
"tha-ap548:23.4": "viyatto nītikovido.",
"tha-ap548:24.1": "Ekūnatiṃso vayasā,",
"tha-ap548:24.2": "nikkhamitvā agārato;",
"tha-ap548:24.3": "Chabbassaṃ vītināmetvā,",
"tha-ap548:24.4": "āsi buddho vināyako.",
"tha-ap548:25.1": "Jetvā sasenakaṃ māraṃ,",
"tha-ap548:25.2": "khepayitvāna āsave;",
"tha-ap548:25.3": "Bhavaṇṇavaṃ taritvāna,",
"tha-ap548:25.4": "buddho āsi sadevake.",
"tha-ap548:26.1": "Isivhayaṃ gamitvāna,",
"tha-ap548:26.2": "vinetvā pañcavaggiye;",
"tha-ap548:26.3": "Tato vinesi bhagavā,",
"tha-ap548:26.4": "gantvā gantvā tahiṃ tahiṃ.",
"tha-ap548:27.1": "Veneyye vinayanto so,",
"tha-ap548:27.2": "saṅgaṇhanto sadevakaṃ;",
"tha-ap548:27.3": "Upecca magadhe giriṃ,",
"tha-ap548:27.4": "viharittha tadā jino.",
"tha-ap548:28.1": "Tadā suddhodanenāhaṃ,",
"tha-ap548:28.2": "bhūmipālena pesito;",
"tha-ap548:28.3": "Gantvā disvā dasabalaṃ,",
"tha-ap548:28.4": "pabbajitvārahā ahuṃ.",
"tha-ap548:29.1": "Tadā mahesiṃ yācitvā,",
"tha-ap548:29.2": "pāpayiṃ kapilavhayaṃ;",
"tha-ap548:29.3": "Tato purāhaṃ gantvāna,",
"tha-ap548:29.4": "pasādesiṃ mahākulaṃ.",
"tha-ap548:30.1": "Jino tasmiṃ guṇe tuṭṭho,",
"tha-ap548:30.2": "maṃ mahāparisāya so;",
"tha-ap548:30.3": "Kulappasādakānaggaṃ,",
"tha-ap548:30.4": "paññāpesi vināyako.",
"tha-ap548:31.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap548:31.4": "viharāmi anāsavo.",
"tha-ap548:32.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap548:32.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap548:33.1": "Paṭisambhidā catasso, … pe …",
"tha-ap548:33.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap548:34.1": "Itthaṃ sudaṃ āyasmā kāḷudāyī thero imā gāthāyo abhāsitthāti.",
"tha-ap548:35.1": "Kāḷudāyittherassāpadānaṃ chaṭṭhaṃ."
}