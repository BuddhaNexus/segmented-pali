{
"tha-ap177:1.1": "Therāpadāna",
"tha-ap177:2.1": "Kumudavagga",
"tha-ap177:3.1": "5. Sīhāsanadāyakattheraapadāna",
"tha-ap177:4.1": "“Nibbute lokanāthamhi,",
"tha-ap177:4.2": "padumuttaranāyake;",
"tha-ap177:4.3": "Pasannacitto sumano,",
"tha-ap177:4.4": "sīhāsanamadāsahaṃ.",
"tha-ap177:5.1": "Bahūhi gandhamālehi,",
"tha-ap177:5.2": "diṭṭhadhammasukhāvahe;",
"tha-ap177:5.3": "Tattha pūjañca katvāna,",
"tha-ap177:5.4": "nibbāyati bahujjano.",
"tha-ap177:6.1": "Pasannacitto sumano,",
"tha-ap177:6.2": "vanditvā bodhimuttamaṃ;",
"tha-ap177:6.3": "Kappānaṃ satasahassaṃ,",
"tha-ap177:6.4": "duggatiṃ nupapajjahaṃ.",
"tha-ap177:7.1": "Pannarasasahassamhi,",
"tha-ap177:7.2": "kappānaṃ aṭṭha āsu te;",
"tha-ap177:7.3": "Siluccayasanāmā ca,",
"tha-ap177:7.4": "rājāno cakkavattino.",
"tha-ap177:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap177:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap177:9.1": "Itthaṃ sudaṃ āyasmā sīhāsanadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap177:10.1": "Sīhāsanadāyakattherassāpadānaṃ pañcamaṃ."
}