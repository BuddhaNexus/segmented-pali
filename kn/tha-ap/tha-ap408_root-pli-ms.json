{
"tha-ap408:1.1": "Therāpadāna",
"tha-ap408:2.1": "Metteyyavagga",
"tha-ap408:3.1": "6. Nandakattheraapadāna",
"tha-ap408:4.1": "“Migaluddo pure āsiṃ,",
"tha-ap408:4.2": "Araññe kānane ahaṃ;",
"tha-ap408:4.3": "Pasadaṃ migamesanto,",
"tha-ap408:4.4": "Sayambhuṃ addasaṃ ahaṃ.",
"tha-ap408:5.1": "Anuruddho nāma sambuddho,",
"tha-ap408:5.2": "sayambhū aparājito;",
"tha-ap408:5.3": "Vivekakāmo so dhīro,",
"tha-ap408:5.4": "vanamajjhogahī tadā.",
"tha-ap408:6.1": "Catudaṇḍe gahetvāna,",
"tha-ap408:6.2": "catuṭṭhāne ṭhapesahaṃ;",
"tha-ap408:6.3": "Maṇḍapaṃ sukataṃ katvā,",
"tha-ap408:6.4": "padmapupphehi chādayiṃ.",
"tha-ap408:7.1": "Maṇḍapaṃ chādayitvāna,",
"tha-ap408:7.2": "sayambhuṃ abhivādayiṃ;",
"tha-ap408:7.3": "Dhanuṃ tattheva nikkhippa,",
"tha-ap408:7.4": "pabbajiṃ anagāriyaṃ.",
"tha-ap408:8.1": "Naciraṃ pabbajitassa,",
"tha-ap408:8.2": "byādhi me udapajjatha;",
"tha-ap408:8.3": "Pubbakammaṃ saritvāna,",
"tha-ap408:8.4": "tattha kālaṅkato ahaṃ.",
"tha-ap408:9.1": "Pubbakammena saṃyutto,",
"tha-ap408:9.2": "tusitaṃ agamāsahaṃ;",
"tha-ap408:9.3": "Tattha soṇṇamayaṃ byamhaṃ,",
"tha-ap408:9.4": "nibbattati yadicchakaṃ.",
"tha-ap408:10.1": "Sahassayuttaṃ hayavāhiṃ,",
"tha-ap408:10.2": "dibbayānamadhiṭṭhito;",
"tha-ap408:10.3": "Āruhitvāna taṃ yānaṃ,",
"tha-ap408:10.4": "gacchāmahaṃ yadicchakaṃ.",
"tha-ap408:11.1": "Tato me niyyamānassa,",
"tha-ap408:11.2": "devabhūtassa me sato;",
"tha-ap408:11.3": "Samantā yojanasataṃ,",
"tha-ap408:11.4": "maṇḍapo me dharīyati.",
"tha-ap408:12.1": "Sayanehaṃ tuvaṭṭāmi,",
"tha-ap408:12.2": "acchanne pupphasanthate;",
"tha-ap408:12.3": "Antalikkhā ca padumā,",
"tha-ap408:12.4": "vassante niccakālikaṃ.",
"tha-ap408:13.1": "Marīcike phandamāne,",
"tha-ap408:13.2": "tappamāne ca ātape;",
"tha-ap408:13.3": "Na maṃ tāpeti ātāpo,",
"tha-ap408:13.4": "maṇḍapassa idaṃ phalaṃ.",
"tha-ap408:14.1": "Duggatiṃ samatikkanto,",
"tha-ap408:14.2": "apāyā pihitā mama;",
"tha-ap408:14.3": "Maṇḍape rukkhamūle vā,",
"tha-ap408:14.4": "santāpo me na vijjati.",
"tha-ap408:15.1": "Mahīsaññaṃ adhiṭṭhāya,",
"tha-ap408:15.2": "loṇatoyaṃ tarāmahaṃ;",
"tha-ap408:15.3": "Tassa me sukataṃ kammaṃ,",
"tha-ap408:15.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap408:16.1": "Apathampi pathaṃ katvā,",
"tha-ap408:16.2": "gacchāmi anilañjase;",
"tha-ap408:16.3": "Aho me sukataṃ kammaṃ,",
"tha-ap408:16.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap408:17.1": "Pubbenivāsaṃ jānāmi,",
"tha-ap408:17.2": "dibbacakkhu visodhitaṃ;",
"tha-ap408:17.3": "Āsavā me parikkhīṇā,",
"tha-ap408:17.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap408:18.1": "Jahitā purimā jāti,",
"tha-ap408:18.2": "buddhassa oraso ahaṃ;",
"tha-ap408:18.3": "Dāyādomhi ca saddhamme,",
"tha-ap408:18.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap408:19.1": "Ārādhitomhi sugataṃ,",
"tha-ap408:19.2": "Gotamaṃ sakyapuṅgavaṃ;",
"tha-ap408:19.3": "Dhammadhajo dhammadāyādo,",
"tha-ap408:19.4": "Buddhapūjāyidaṃ phalaṃ.",
"tha-ap408:20.1": "Upaṭṭhitvāna sambuddhaṃ,",
"tha-ap408:20.2": "gotamaṃ sakyapuṅgavaṃ;",
"tha-ap408:20.3": "Pāraṅgamaniyaṃ maggaṃ,",
"tha-ap408:20.4": "apucchiṃ lokanāyakaṃ.",
"tha-ap408:21.1": "Ajjhiṭṭho kathayī buddho,",
"tha-ap408:21.2": "gambhīraṃ nipuṇaṃ padaṃ;",
"tha-ap408:21.3": "Tassāhaṃ dhammaṃ sutvāna,",
"tha-ap408:21.4": "pattomhi āsavakkhayaṃ.",
"tha-ap408:22.1": "Aho me sukataṃ kammaṃ,",
"tha-ap408:22.2": "parimuttomhi jātiyā;",
"tha-ap408:22.3": "Sabbāsavaparikkhīṇo,",
"tha-ap408:22.4": "natthi dāni punabbhavo.",
"tha-ap408:23.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap408:23.4": "viharāmi anāsavo.",
"tha-ap408:24.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap408:24.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap408:25.1": "Paṭisambhidā catasso, … pe …",
"tha-ap408:25.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap408:26.1": "Itthaṃ sudaṃ āyasmā nandako thero imā gāthāyo abhāsitthāti.",
"tha-ap408:27.1": "Nandakattherassāpadānaṃ chaṭṭhaṃ."
}