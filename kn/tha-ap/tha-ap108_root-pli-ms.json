{
"tha-ap108:1.1": "Therāpadāna",
"tha-ap108:2.1": "Bhikkhadāyivagga",
"tha-ap108:3.1": "6. Udakapūjakattheraapadāna",
"tha-ap108:4.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
"tha-ap108:4.2": "Gacchantaṃ anilañjase;",
"tha-ap108:4.3": "Ghatāsanaṃva jalitaṃ,",
"tha-ap108:4.4": "Ādittaṃva hutāsanaṃ.",
"tha-ap108:5.1": "Pāṇinā udakaṃ gayha,",
"tha-ap108:5.2": "ākāse ukkhipiṃ ahaṃ;",
"tha-ap108:5.3": "Sampaṭicchi mahāvīro,",
"tha-ap108:5.4": "buddho kāruṇiko isi.",
"tha-ap108:6.1": "Antalikkhe ṭhito satthā,",
"tha-ap108:6.2": "padumuttaranāmako;",
"tha-ap108:6.3": "Mama saṅkappamaññāya,",
"tha-ap108:6.4": "imaṃ gāthaṃ abhāsatha.",
"tha-ap108:7.1": "‘Iminā dakadānena,",
"tha-ap108:7.2": "pītiuppādanena ca;",
"tha-ap108:7.3": "Kappasatasahassampi,",
"tha-ap108:7.4": "duggatiṃ nupapajjati’.",
"tha-ap108:8.1": "Tena kammena dvipadinda,",
"tha-ap108:8.2": "lokajeṭṭha narāsabha;",
"tha-ap108:8.3": "Pattomhi acalaṃ ṭhānaṃ,",
"tha-ap108:8.4": "hitvā jayaparājayaṃ.",
"tha-ap108:9.1": "Sahassarājanāmena,",
"tha-ap108:9.2": "tayo te cakkavattino;",
"tha-ap108:9.3": "Pañcasaṭṭhikappasate,",
"tha-ap108:9.4": "cāturantā janādhipā.",
"tha-ap108:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap108:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap108:11.1": "Itthaṃ sudaṃ āyasmā udakapūjako thero imā gāthāyo abhāsitthāti.",
"tha-ap108:12.1": "Udakapūjakattherassāpadānaṃ chaṭṭhaṃ."
}