{
"tha-ap338:1.1": "Therāpadāna",
"tha-ap338:2.1": "Gandhodakavagga",
"tha-ap338:3.1": "6. Pabhaṅkarattheraapadāna",
"tha-ap338:4.1": "“Padumuttarabhagavato,",
"tha-ap338:4.2": "lokajeṭṭhassa tādino;",
"tha-ap338:4.3": "Vipine cetiyaṃ āsi,",
"tha-ap338:4.4": "vāḷamigasamākule.",
"tha-ap338:5.1": "Na koci visahi gantuṃ,",
"tha-ap338:5.2": "cetiyaṃ abhivandituṃ;",
"tha-ap338:5.3": "Tiṇakaṭṭhalatonaddhaṃ,",
"tha-ap338:5.4": "paluggaṃ āsi cetiyaṃ.",
"tha-ap338:6.1": "Vanakammiko tadā āsiṃ,",
"tha-ap338:6.2": "pitumātumatenahaṃ;",
"tha-ap338:6.3": "Addasaṃ vipine thūpaṃ,",
"tha-ap338:6.4": "luggaṃ tiṇalatākulaṃ.",
"tha-ap338:7.1": "Disvānāhaṃ buddhathūpaṃ,",
"tha-ap338:7.2": "garucittaṃ upaṭṭhahiṃ;",
"tha-ap338:7.3": "Buddhaseṭṭhassa thūpoyaṃ,",
"tha-ap338:7.4": "paluggo acchatī vane.",
"tha-ap338:8.1": "Nacchannaṃ nappatirūpaṃ,",
"tha-ap338:8.2": "jānantassa guṇāguṇaṃ;",
"tha-ap338:8.3": "Buddhathūpaṃ asodhetvā,",
"tha-ap338:8.4": "aññaṃ kammaṃ payojaye.",
"tha-ap338:9.1": "Tiṇakaṭṭhañca valliñca,",
"tha-ap338:9.2": "sodhayitvāna cetiye;",
"tha-ap338:9.3": "Vanditvā aṭṭha vārāni,",
"tha-ap338:9.4": "paṭikuṭiko agacchahaṃ.",
"tha-ap338:10.1": "Tena kammena sukatena,",
"tha-ap338:10.2": "cetanāpaṇidhīhi ca;",
"tha-ap338:10.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap338:10.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap338:11.1": "Tattha me sukataṃ byamhaṃ,",
"tha-ap338:11.2": "sovaṇṇaṃ sapabhassaraṃ;",
"tha-ap338:11.3": "Saṭṭhiyojanamubbiddhaṃ,",
"tha-ap338:11.4": "tiṃsayojanavitthataṃ.",
"tha-ap338:12.1": "Tisatāni ca vārāni,",
"tha-ap338:12.2": "devarajjamakārayiṃ;",
"tha-ap338:12.3": "Pañcavīsatikkhattuñca,",
"tha-ap338:12.4": "cakkavattī ahosahaṃ.",
"tha-ap338:13.1": "Bhavābhave saṃsaranto,",
"tha-ap338:13.2": "mahābhogaṃ labhāmahaṃ;",
"tha-ap338:13.3": "Bhoge me ūnatā natthi,",
"tha-ap338:13.4": "sodhanāya idaṃ phalaṃ.",
"tha-ap338:14.1": "Sivikā hatthikhandhena,",
"tha-ap338:14.2": "vipine gacchato mama;",
"tha-ap338:14.3": "Yaṃ yaṃ disāhaṃ gacchāmi,",
"tha-ap338:14.4": "saraṇaṃ sampate vanaṃ.",
"tha-ap338:15.1": "Khāṇuṃ vā kaṇṭakaṃ vāpi,",
"tha-ap338:15.2": "nāhaṃ passāmi cakkhunā;",
"tha-ap338:15.3": "Puññakammena saṃyutto,",
"tha-ap338:15.4": "sayamevāpanīyare.",
"tha-ap338:16.1": "Kuṭṭhaṃ gaṇḍo kilāso ca,",
"tha-ap338:16.2": "apamāro vitacchikā;",
"tha-ap338:16.3": "Daddu kacchu ca me natthi,",
"tha-ap338:16.4": "sodhanāya idaṃ phalaṃ.",
"tha-ap338:17.1": "Aññampi me acchariyaṃ,",
"tha-ap338:17.2": "buddhathūpassa sodhane;",
"tha-ap338:17.3": "Nābhijānāmi me kāye,",
"tha-ap338:17.4": "jātaṃ piḷakabindukaṃ.",
"tha-ap338:18.1": "Aññampi me acchariyaṃ,",
"tha-ap338:18.2": "buddhathūpamhi sodhite;",
"tha-ap338:18.3": "Duve bhave saṃsarāmi,",
"tha-ap338:18.4": "devatte atha mānuse.",
"tha-ap338:19.1": "Aññampi me acchariyaṃ,",
"tha-ap338:19.2": "buddhathūpamhi sodhite;",
"tha-ap338:19.3": "Suvaṇṇavaṇṇo sabbattha,",
"tha-ap338:19.4": "sappabhāso bhavāmahaṃ.",
"tha-ap338:20.1": "Aññampi me acchariyaṃ,",
"tha-ap338:20.2": "buddhathūpamhi sodhite;",
"tha-ap338:20.3": "Amanāpaṃ vivajjati,",
"tha-ap338:20.4": "manāpaṃ upatiṭṭhati.",
"tha-ap338:21.1": "Aññampi me acchariyaṃ,",
"tha-ap338:21.2": "buddhathūpamhi sodhite;",
"tha-ap338:21.3": "Visuddhaṃ hoti me cittaṃ,",
"tha-ap338:21.4": "ekaggaṃ susamāhitaṃ.",
"tha-ap338:22.1": "Aññampi me acchariyaṃ,",
"tha-ap338:22.2": "buddhathūpamhi sodhite;",
"tha-ap338:22.3": "Ekāsane nisīditvā,",
"tha-ap338:22.4": "arahattamapāpuṇiṃ.",
"tha-ap338:23.1": "Satasahassito kappe,",
"tha-ap338:23.2": "yaṃ kammamakariṃ tadā;",
"tha-ap338:23.3": "Duggatiṃ nābhijānāmi,",
"tha-ap338:23.4": "sodhanāya idaṃ phalaṃ.",
"tha-ap338:24.1": "Paṭisambhidā catasso, … pe …",
"tha-ap338:24.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap338:25.1": "Itthaṃ sudaṃ āyasmā pabhaṅkaro thero imā gāthāyo abhāsitthāti.",
"tha-ap338:26.1": "Pabhaṅkarattherassāpadānaṃ chaṭṭhaṃ."
}