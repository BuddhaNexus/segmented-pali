{
"tha-ap44:1.1": "Therāpadāna",
"tha-ap44:2.1": "Upālivagga",
"tha-ap44:3.1": "2 Soṇakoḷivisattheraapadāna",
"tha-ap44:4.1": "“Anomadassissa munino,",
"tha-ap44:4.2": "lokajeṭṭhassa tādino;",
"tha-ap44:4.3": "Sudhāya lepanaṃ katvā,",
"tha-ap44:4.4": "caṅkamaṃ kārayiṃ ahaṃ.",
"tha-ap44:5.1": "Nānāvaṇṇehi pupphehi,",
"tha-ap44:5.2": "caṅkamaṃ santhariṃ ahaṃ;",
"tha-ap44:5.3": "Ākāse vitānaṃ katvā,",
"tha-ap44:5.4": "bhojayiṃ buddhamuttamaṃ.",
"tha-ap44:6.1": "Añjaliṃ paggahetvāna,",
"tha-ap44:6.2": "abhivādetvāna subbataṃ;",
"tha-ap44:6.3": "Dīghasālaṃ bhagavato,",
"tha-ap44:6.4": "niyyādesimahaṃ tadā.",
"tha-ap44:7.1": "Mama saṅkappamaññāya,",
"tha-ap44:7.2": "satthā loke anuttaro;",
"tha-ap44:7.3": "Paṭiggahesi bhagavā,",
"tha-ap44:7.4": "anukampāya cakkhumā.",
"tha-ap44:8.1": "Paṭiggahetvāna sambuddho,",
"tha-ap44:8.2": "dakkhiṇeyyo sadevake;",
"tha-ap44:8.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap44:8.4": "imā gāthā abhāsatha.",
"tha-ap44:9.1": "‘Yo so haṭṭhena cittena,",
"tha-ap44:9.2": "dīghasālaṃ adāsi me;",
"tha-ap44:9.3": "Tamahaṃ kittayissāmi,",
"tha-ap44:9.4": "suṇātha mama bhāsato.",
"tha-ap44:10.1": "Imassa maccukālamhi,",
"tha-ap44:10.2": "puññakammasamaṅgino;",
"tha-ap44:10.3": "Sahassayuttassaratho,",
"tha-ap44:10.4": "upaṭṭhissati tāvade.",
"tha-ap44:11.1": "Tena yānenayaṃ poso,",
"tha-ap44:11.2": "devalokaṃ gamissati;",
"tha-ap44:11.3": "Anumodissare devā,",
"tha-ap44:11.4": "sampatte kusalabbhave.",
"tha-ap44:12.1": "Mahārahaṃ byamhaṃ seṭṭhaṃ,",
"tha-ap44:12.2": "ratanamattikalepanaṃ;",
"tha-ap44:12.3": "Kūṭāgāravarūpetaṃ,",
"tha-ap44:12.4": "byamhaṃ ajjhāvasissati.",
"tha-ap44:13.1": "Tiṃsakappasahassāni,",
"tha-ap44:13.2": "devaloke ramissati;",
"tha-ap44:13.3": "Pañcavīsati kappāni,",
"tha-ap44:13.4": "devarājā bhavissati.",
"tha-ap44:14.1": "Sattasattatikkhattuñca,",
"tha-ap44:14.2": "cakkavattī bhavissati;",
"tha-ap44:14.3": "Yasodharasanāmā te,",
"tha-ap44:14.4": "sabbepi ekanāmakā.",
"tha-ap44:15.1": "Dve sampattī anubhotvā,",
"tha-ap44:15.2": "Vaḍḍhetvā puññasañcayaṃ;",
"tha-ap44:15.3": "Aṭṭhavīsatikappamhi,",
"tha-ap44:15.4": "Cakkavattī bhavissati.",
"tha-ap44:16.1": "Tatrāpi byamhaṃ pavaraṃ,",
"tha-ap44:16.2": "vissakammena māpitaṃ;",
"tha-ap44:16.3": "Dasasaddāvivittaṃ taṃ,",
"tha-ap44:16.4": "puramajjhāvasissati.",
"tha-ap44:17.1": "Aparimeyye ito kappe,",
"tha-ap44:17.2": "bhūmipālo mahiddhiko;",
"tha-ap44:17.3": "Okkāko nāma nāmena,",
"tha-ap44:17.4": "rājā raṭṭhe bhavissati.",
"tha-ap44:18.1": "Soḷasitthisahassānaṃ,",
"tha-ap44:18.2": "sabbāsaṃ pavarā ca sā;",
"tha-ap44:18.3": "Abhijātā khattiyānī,",
"tha-ap44:18.4": "nava putte janessati.",
"tha-ap44:19.1": "Nava putte janetvāna,",
"tha-ap44:19.2": "khattiyānī marissati;",
"tha-ap44:19.3": "Taruṇī ca piyā kaññā,",
"tha-ap44:19.4": "mahesittaṃ karissati.",
"tha-ap44:20.1": "Okkākaṃ tosayitvāna,",
"tha-ap44:20.2": "varaṃ kaññā labhissati;",
"tha-ap44:20.3": "Varaṃ laddhāna sā kaññā,",
"tha-ap44:20.4": "putte pabbājayissati.",
"tha-ap44:21.1": "Pabbājitā ca te sabbe,",
"tha-ap44:21.2": "gamissanti naguttamaṃ;",
"tha-ap44:21.3": "Jātibhedabhayā sabbe,",
"tha-ap44:21.4": "bhaginīhi vasissare.",
"tha-ap44:22.1": "Ekā ca kaññā byādhīhi,",
"tha-ap44:22.2": "bhavissati parikkhatā;",
"tha-ap44:22.3": "Mā no jāti pabhijjīti,",
"tha-ap44:22.4": "nikhaṇissanti khattiyā.",
"tha-ap44:23.1": "Khattiyo nīharitvāna,",
"tha-ap44:23.2": "tāya saddhiṃ vasissati;",
"tha-ap44:23.3": "Bhavissati tadā bhedo,",
"tha-ap44:23.4": "okkākakulasambhavo.",
"tha-ap44:24.1": "Tesaṃ pajā bhavissanti,",
"tha-ap44:24.2": "koḷiyā nāma jātiyā;",
"tha-ap44:24.3": "Tattha mānusakaṃ bhogaṃ,",
"tha-ap44:24.4": "anubhossatinappakaṃ.",
"tha-ap44:25.1": "Tamhā kāyā cavitvāna,",
"tha-ap44:25.2": "devalokaṃ gamissati;",
"tha-ap44:25.3": "Tatrāpi pavaraṃ byamhaṃ,",
"tha-ap44:25.4": "labhissati manoramaṃ.",
"tha-ap44:26.1": "Devalokā cavitvāna,",
"tha-ap44:26.2": "sukkamūlena codito;",
"tha-ap44:26.3": "Āgantvāna manussattaṃ,",
"tha-ap44:26.4": "soṇo nāma bhavissati.",
"tha-ap44:27.1": "Āraddhavīriyo pahitatto,",
"tha-ap44:27.2": "Padahaṃ satthu sāsane;",
"tha-ap44:27.3": "Sabbāsave pariññāya,",
"tha-ap44:27.4": "Nibbāyissatināsavo.",
"tha-ap44:28.1": "Anantadassī bhagavā,",
"tha-ap44:28.2": "gotamo sakyapuṅgavo;",
"tha-ap44:28.3": "Visesaññū mahāvīro,",
"tha-ap44:28.4": "aggaṭṭhāne ṭhapessati’.",
"tha-ap44:29.1": "Vuṭṭhamhi deve caturaṅgulamhi,",
"tha-ap44:29.2": "Tiṇe anileritaaṅgaṇamhi;",
"tha-ap44:29.3": "Ṭhatvāna yogassa payuttatādino,",
"tha-ap44:29.4": "Tatottariṃ pāramatā na vijjati.",
"tha-ap44:30.1": "Uttame damathe danto,",
"tha-ap44:30.2": "cittaṃ me supaṇīhitaṃ;",
"tha-ap44:30.3": "Bhāro me ohito sabbo,",
"tha-ap44:30.4": "nibbutomhi anāsavo.",
"tha-ap44:31.1": "Aṅgīraso mahānāgo,",
"tha-ap44:31.2": "abhijātova kesarī;",
"tha-ap44:31.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap44:31.4": "etadagge ṭhapesi maṃ.",
"tha-ap44:32.1": "Paṭisambhidā catasso, … pe …",
"tha-ap44:32.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap44:33.1": "Itthaṃ sudaṃ āyasmā soṇo koḷiviso thero imā gāthāyo abhāsitthāti.",
"tha-ap44:34.1": "Soṇakoḷivisattherassāpadānaṃ dutiyaṃ."
}