{
"tha-ap33:1.1": "Therāpadāna",
"tha-ap33:2.1": "Kuṇḍadhānavagga",
"tha-ap33:3.1": "1. Kuṇḍadhānattheraapadāna",
"tha-ap33:4.1": "“Sattāhaṃ paṭisallīnaṃ,",
"tha-ap33:4.2": "sayambhuṃ aggapuggalaṃ;",
"tha-ap33:4.3": "Pasannacitto sumano,",
"tha-ap33:4.4": "buddhaseṭṭhaṃ upaṭṭhahiṃ.",
"tha-ap33:5.1": "Vuṭṭhitaṃ kālamaññāya,",
"tha-ap33:5.2": "padumuttaraṃ mahāmuniṃ;",
"tha-ap33:5.3": "Mahantiṃ kadalīkaṇṇiṃ,",
"tha-ap33:5.4": "gahetvā upagacchahaṃ.",
"tha-ap33:6.1": "Paṭiggahetvā bhagavā,",
"tha-ap33:6.2": "sabbaññū lokanāyako;",
"tha-ap33:6.3": "Mama cittaṃ pasādento,",
"tha-ap33:6.4": "paribhuñji mahāmuni.",
"tha-ap33:7.1": "Paribhuñjitvā sambuddho,",
"tha-ap33:7.2": "satthavāho anuttaro;",
"tha-ap33:7.3": "Sakāsane nisīditvā,",
"tha-ap33:7.4": "imā gāthā abhāsatha.",
"tha-ap33:8.1": "‘Ye ca santi samitāro,",
"tha-ap33:8.2": "yakkhā imamhi pabbate;",
"tha-ap33:8.3": "Araññe bhūtabhabyāni,",
"tha-ap33:8.4": "suṇantu vacanaṃ mama.",
"tha-ap33:9.1": "Yo so buddhaṃ upaṭṭhāsi,",
"tha-ap33:9.2": "migarājaṃva kesariṃ;",
"tha-ap33:9.3": "Tamahaṃ kittayissāmi,",
"tha-ap33:9.4": "suṇātha mama bhāsato.",
"tha-ap33:10.1": "Ekādasañcakkhattuṃ so,",
"tha-ap33:10.2": "devarājā bhavissati;",
"tha-ap33:10.3": "Catutiṃsatikkhattuñca,",
"tha-ap33:10.4": "cakkavattī bhavissati.",
"tha-ap33:11.1": "Kappasatasahassamhi,",
"tha-ap33:11.2": "okkākakulasambhavo;",
"tha-ap33:11.3": "Gotamo nāma gottena,",
"tha-ap33:11.4": "satthā loke bhavissati.",
"tha-ap33:12.1": "Akkositvāna samaṇe,",
"tha-ap33:12.2": "sīlavante anāsave;",
"tha-ap33:12.3": "Pāpakammavipākena,",
"tha-ap33:12.4": "nāmadheyyaṃ labhissati.",
"tha-ap33:13.1": "Tassa dhamme sudāyādo,",
"tha-ap33:13.2": "oraso dhammanimmito;",
"tha-ap33:13.3": "Kuṇḍadhānoti nāmena,",
"tha-ap33:13.4": "sāvako so bhavissati’.",
"tha-ap33:14.1": "Pavivekamanuyutto,",
"tha-ap33:14.2": "jhāyī jhānarato ahaṃ;",
"tha-ap33:14.3": "Tosayitvāna satthāraṃ,",
"tha-ap33:14.4": "viharāmi anāsavo.",
"tha-ap33:15.1": "Sāvakehi parivuto,",
"tha-ap33:15.2": "bhikkhusaṃghapurakkhato;",
"tha-ap33:15.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap33:15.4": "salākaṃ gāhayī jino.",
"tha-ap33:16.1": "Ekaṃsaṃ cīvaraṃ katvā,",
"tha-ap33:16.2": "vanditvā lokanāyakaṃ;",
"tha-ap33:16.3": "Vadataṃ varassa purato,",
"tha-ap33:16.4": "paṭhamaṃ aggahesahaṃ.",
"tha-ap33:17.1": "Tena kammena bhagavā,",
"tha-ap33:17.2": "dasasahassikampako;",
"tha-ap33:17.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap33:17.4": "aggaṭṭhāne ṭhapesi maṃ.",
"tha-ap33:18.1": "Vīriyaṃ me dhuradhorayhaṃ,",
"tha-ap33:18.2": "yogakkhemādhivāhanaṃ;",
"tha-ap33:18.3": "Dhāremi antimaṃ dehaṃ,",
"tha-ap33:18.4": "sammāsambuddhasāsane.",
"tha-ap33:19.1": "Paṭisambhidā catasso,",
"tha-ap33:19.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap33:19.3": "Chaḷabhiññā sacchikatā,",
"tha-ap33:19.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap33:20.1": "Itthaṃ sudaṃ āyasmā kuṇḍadhāno thero imā gāthāyo abhāsitthāti.",
"tha-ap33:21.1": "Kuṇḍadhānattherassāpadānaṃ paṭhamaṃ."
}