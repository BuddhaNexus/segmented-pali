{
"tha-ap24:1.1": "Therāpadāna",
"tha-ap24:2.1": "Subhūtivagga",
"tha-ap24:3.1": "2 Upavānattheraapadāna",
"tha-ap24:4.1": "“Padumuttaro nāma jino,",
"tha-ap24:4.2": "sabbadhammāna pāragū;",
"tha-ap24:4.3": "Jalitvā aggikkhandhova,",
"tha-ap24:4.4": "sambuddho parinibbuto.",
"tha-ap24:5.1": "Mahājanā samāgamma,",
"tha-ap24:5.2": "pūjayitvā tathāgataṃ;",
"tha-ap24:5.3": "Citaṃ katvāna sukataṃ,",
"tha-ap24:5.4": "sarīraṃ abhiropayuṃ.",
"tha-ap24:6.1": "Sarīrakiccaṃ katvāna,",
"tha-ap24:6.2": "dhātuṃ tattha samānayuṃ;",
"tha-ap24:6.3": "Sadevamānusā sabbe,",
"tha-ap24:6.4": "buddhathūpaṃ akaṃsu te.",
"tha-ap24:7.1": "Paṭhamā kañcanamayā,",
"tha-ap24:7.2": "dutiyāsi maṇīmayā;",
"tha-ap24:7.3": "Tatiyā rūpiyamayā,",
"tha-ap24:7.4": "catutthī phalikāmayā.",
"tha-ap24:8.1": "Tathā pañcamiyā bhūmi,",
"tha-ap24:8.2": "lohitaṅgamayā ahu;",
"tha-ap24:8.3": "Chaṭṭhā masāragallassa,",
"tha-ap24:8.4": "sabbaratanamayūpari.",
"tha-ap24:9.1": "Jaṅghā maṇimayā āsi,",
"tha-ap24:9.2": "vedikā ratanamayā;",
"tha-ap24:9.3": "Sabbasoṇṇamayo thūpo,",
"tha-ap24:9.4": "uddhaṃ yojanamuggato.",
"tha-ap24:10.1": "Devā tattha samāgantvā,",
"tha-ap24:10.2": "ekato mantayuṃ tadā;",
"tha-ap24:10.3": "Mayampi thūpaṃ kassāma,",
"tha-ap24:10.4": "lokanāthassa tādino.",
"tha-ap24:11.1": "Dhātu āveṇikā natthi,",
"tha-ap24:11.2": "sarīraṃ ekapiṇḍitaṃ;",
"tha-ap24:11.3": "Imamhi buddhathūpamhi,",
"tha-ap24:11.4": "kassāma kañcukaṃ mayaṃ.",
"tha-ap24:12.1": "Devā sattahi ratnehi,",
"tha-ap24:12.2": "aññaṃ vaḍḍhesu yojanaṃ;",
"tha-ap24:12.3": "Thūpo dviyojanubbedho,",
"tha-ap24:12.4": "timiraṃ byapahanti so.",
"tha-ap24:13.1": "Nāgā tattha samāgantvā,",
"tha-ap24:13.2": "ekato mantayuṃ tadā;",
"tha-ap24:13.3": "Manussā ceva devā ca,",
"tha-ap24:13.4": "buddhathūpaṃ akaṃsu te.",
"tha-ap24:14.1": "Mā no pamattā assumha,",
"tha-ap24:14.2": "appamattā sadevakā;",
"tha-ap24:14.3": "Mayampi thūpaṃ kassāma,",
"tha-ap24:14.4": "lokanāthassa tādino.",
"tha-ap24:15.1": "Indanīlaṃ mahānīlaṃ,",
"tha-ap24:15.2": "atho jotirasaṃ maṇiṃ;",
"tha-ap24:15.3": "Ekato sannipātetvā,",
"tha-ap24:15.4": "buddhathūpaṃ achādayuṃ.",
"tha-ap24:16.1": "Sabbaṃ maṇimayaṃ āsi,",
"tha-ap24:16.2": "tāvatā buddhacetiyaṃ;",
"tha-ap24:16.3": "Tiyojanasamubbiddhaṃ,",
"tha-ap24:16.4": "ālokakaraṇaṃ tadā.",
"tha-ap24:17.1": "Garuḷā ca samāgantvā,",
"tha-ap24:17.2": "ekato mantayuṃ tadā;",
"tha-ap24:17.3": "Manussā devā nāgā ca,",
"tha-ap24:17.4": "buddhathūpaṃ akaṃsu te.",
"tha-ap24:18.1": "‘Mā no pamattā assumha,",
"tha-ap24:18.2": "appamattā sadevakā;",
"tha-ap24:18.3": "Mayampi thūpaṃ kassāma,",
"tha-ap24:18.4": "lokanāthassa tādino’.",
"tha-ap24:19.1": "Sabbaṃ maṇimayaṃ thūpaṃ,",
"tha-ap24:19.2": "akaruṃ te ca kañcukaṃ;",
"tha-ap24:19.3": "Yojanaṃ tepi vaḍḍhesuṃ,",
"tha-ap24:19.4": "āyataṃ buddhacetiyaṃ.",
"tha-ap24:20.1": "Catuyojanamubbiddho,",
"tha-ap24:20.2": "buddhathūpo virocati;",
"tha-ap24:20.3": "Obhāseti disā sabbā,",
"tha-ap24:20.4": "sataraṃsīva uggato.",
"tha-ap24:21.1": "Kumbhaṇḍā ca samāgantvā,",
"tha-ap24:21.2": "ekato mantayuṃ tadā;",
"tha-ap24:21.3": "Manussā ceva devā ca,",
"tha-ap24:21.4": "nāgā ca garuḷā tathā;",
"tha-ap24:21.5": "Paccekaṃ buddhaseṭṭhassa,",
"tha-ap24:21.6": "akaṃsu thūpamuttamaṃ.",
"tha-ap24:22.1": "‘Mā no pamattā assumha,",
"tha-ap24:22.2": "appamattā sadevakā;",
"tha-ap24:22.3": "Mayampi thūpaṃ kassāma,",
"tha-ap24:22.4": "lokanāthassa tādino;",
"tha-ap24:22.5": "Ratanehi chādessāma,",
"tha-ap24:22.6": "āyataṃ buddhacetiyaṃ’.",
"tha-ap24:23.1": "Yojanaṃ tepi vaḍḍhesuṃ,",
"tha-ap24:23.2": "āyataṃ buddhacetiyaṃ;",
"tha-ap24:23.3": "Pañcayojanamubbiddho,",
"tha-ap24:23.4": "thūpo obhāsate tadā.",
"tha-ap24:24.1": "Yakkhā tattha samāgantvā,",
"tha-ap24:24.2": "ekato mantayuṃ tadā;",
"tha-ap24:24.3": "Manussā devā nāgā ca,",
"tha-ap24:24.4": "garuḷā kumbhaaṇḍakā.",
"tha-ap24:25.1": "Paccekaṃ buddhaseṭṭhassa,",
"tha-ap24:25.2": "akaṃsu thūpamuttamaṃ;",
"tha-ap24:25.3": "‘Mā no pamattā assumha,",
"tha-ap24:25.4": "appamattā sadevakā.",
"tha-ap24:26.1": "Mayampi thūpaṃ kassāma,",
"tha-ap24:26.2": "lokanāthassa tādino;",
"tha-ap24:26.3": "Phalikāhi chādessāma,",
"tha-ap24:26.4": "āyataṃ buddhacetiyaṃ’.",
"tha-ap24:27.1": "Yojanaṃ tepi vaḍḍhesuṃ,",
"tha-ap24:27.2": "āyataṃ buddhacetiyaṃ;",
"tha-ap24:27.3": "Cha yojanāni ubbiddho,",
"tha-ap24:27.4": "thūpo obhāsate tadā.",
"tha-ap24:28.1": "Gandhabbā ca samāgantvā,",
"tha-ap24:28.2": "ekato mantayuṃ tadā;",
"tha-ap24:28.3": "‘Manujā devatā nāgā,",
"tha-ap24:28.4": "garuḷā kumbhayakkhakā.",
"tha-ap24:29.1": "Sabbekaṃsu buddhathūpaṃ,",
"tha-ap24:29.2": "mayamettha akārakā;",
"tha-ap24:29.3": "Mayampi thūpaṃ kassāma,",
"tha-ap24:29.4": "lokanāthassa tādino’.",
"tha-ap24:30.1": "Vediyo satta katvāna,",
"tha-ap24:30.2": "chattamāropayiṃsu te;",
"tha-ap24:30.3": "Sabbasoṇṇamayaṃ thūpaṃ,",
"tha-ap24:30.4": "gandhabbā kārayuṃ tadā.",
"tha-ap24:31.1": "Sattayojanamubbiddho,",
"tha-ap24:31.2": "thūpo obhāsate tadā;",
"tha-ap24:31.3": "Rattindivā na ñāyanti,",
"tha-ap24:31.4": "āloko hoti sabbadā.",
"tha-ap24:32.1": "Abhibhonti na tassābhā,",
"tha-ap24:32.2": "candasūrā satārakā;",
"tha-ap24:32.3": "Samantā yojanasate,",
"tha-ap24:32.4": "padīpopi na pajjali.",
"tha-ap24:33.1": "Tena kālena ye keci,",
"tha-ap24:33.2": "thūpaṃ pūjenti mānusā;",
"tha-ap24:33.3": "Na te thūpamāruhanti,",
"tha-ap24:33.4": "ambare ukkhipanti te.",
"tha-ap24:34.1": "Devehi ṭhapito yakkho,",
"tha-ap24:34.2": "abhisammatanāmako;",
"tha-ap24:34.3": "Dhajaṃ vā pupphadāmaṃ vā,",
"tha-ap24:34.4": "abhiropeti uttari.",
"tha-ap24:35.1": "Na te passanti taṃ yakkhaṃ,",
"tha-ap24:35.2": "dāmaṃ passanti gacchato;",
"tha-ap24:35.3": "Evaṃ passitvā gacchantā,",
"tha-ap24:35.4": "sabbe gacchanti suggatiṃ.",
"tha-ap24:36.1": "Viruddhā ye pāvacane,",
"tha-ap24:36.2": "pasannā ye ca sāsane;",
"tha-ap24:36.3": "Pāṭiheraṃ daṭṭhukāmā,",
"tha-ap24:36.4": "thūpaṃ pūjenti mānusā.",
"tha-ap24:37.1": "Nagare haṃsavatiyā,",
"tha-ap24:37.2": "ahosiṃ bhatako tadā;",
"tha-ap24:37.3": "Āmoditaṃ janaṃ disvā,",
"tha-ap24:37.4": "evaṃ cintesahaṃ tadā.",
"tha-ap24:38.1": "‘Uḷāro bhagavā heso,",
"tha-ap24:38.2": "yassa dhātudharedisaṃ;",
"tha-ap24:38.3": "Imā ca janatā tuṭṭhā,",
"tha-ap24:38.4": "kāraṃ kubbaṃ na tappare.",
"tha-ap24:39.1": "Ahampi kāraṃ kassāmi,",
"tha-ap24:39.2": "lokanāthassa tādino;",
"tha-ap24:39.3": "Tassa dhammesu dāyādo,",
"tha-ap24:39.4": "bhavissāmi anāgate’.",
"tha-ap24:40.1": "Sudhotaṃ rajakenāhaṃ,",
"tha-ap24:40.2": "uttareyyapaṭaṃ mama;",
"tha-ap24:40.3": "Veḷagge ālaggetvāna,",
"tha-ap24:40.4": "dhajaṃ ukkhipimambare.",
"tha-ap24:41.1": "Abhisammatako gayha,",
"tha-ap24:41.2": "ambarehāsi me dhajaṃ;",
"tha-ap24:41.3": "Vāteritaṃ dhajaṃ disvā,",
"tha-ap24:41.4": "bhiyyo hāsaṃ janesahaṃ.",
"tha-ap24:42.1": "Tattha cittaṃ pasādetvā,",
"tha-ap24:42.2": "samaṇaṃ upasaṅkamiṃ;",
"tha-ap24:42.3": "Taṃ bhikkhuṃ abhivādetvā,",
"tha-ap24:42.4": "vipākaṃ pucchahaṃ dhaje.",
"tha-ap24:43.1": "So me kathesi ānanda,",
"tha-ap24:43.2": "pītisañjananaṃ mama;",
"tha-ap24:43.3": "‘Tassa dhajassa vipākaṃ,",
"tha-ap24:43.4": "anubhossasi sabbadā.",
"tha-ap24:44.1": "Hatthī assā rathā pattī,",
"tha-ap24:44.2": "senā ca caturaṅginī;",
"tha-ap24:44.3": "Parivāressanti taṃ niccaṃ,",
"tha-ap24:44.4": "dhajadānassidaṃ phalaṃ.",
"tha-ap24:45.1": "Saṭṭhitūriyasahassāni,",
"tha-ap24:45.2": "bheriyo samalaṅkatā;",
"tha-ap24:45.3": "Parivāressanti taṃ niccaṃ,",
"tha-ap24:45.4": "dhajadānassidaṃ phalaṃ.",
"tha-ap24:46.1": "Chaḷāsītisahassāni,",
"tha-ap24:46.2": "nāriyo samalaṅkatā;",
"tha-ap24:46.3": "Vicittavatthābharaṇā,",
"tha-ap24:46.4": "āmuttamaṇikuṇḍalā.",
"tha-ap24:47.1": "Aḷārapamhā hasulā,",
"tha-ap24:47.2": "susaññā tanumajjhimā;",
"tha-ap24:47.3": "Parivāressanti taṃ niccaṃ,",
"tha-ap24:47.4": "dhajadānassidaṃ phalaṃ.",
"tha-ap24:48.1": "Tiṃsakappasahassāni,",
"tha-ap24:48.2": "devaloke ramissasi;",
"tha-ap24:48.3": "Asītikkhattuṃ devindo,",
"tha-ap24:48.4": "devarajjaṃ karissasi.",
"tha-ap24:49.1": "Sahassakkhattuṃ rājā ca,",
"tha-ap24:49.2": "cakkavattī bhavissasi;",
"tha-ap24:49.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap24:49.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap24:50.1": "Kappasatasahassamhi,",
"tha-ap24:50.2": "okkākakulasambhavo;",
"tha-ap24:50.3": "Gotamo nāma gottena,",
"tha-ap24:50.4": "satthā loke bhavissati.",
"tha-ap24:51.1": "Devalokā cavitvāna,",
"tha-ap24:51.2": "sukkamūlena codito;",
"tha-ap24:51.3": "Puññakammena saṃyutto,",
"tha-ap24:51.4": "brahmabandhu bhavissasi.",
"tha-ap24:52.1": "Asītikoṭiṃ chaḍḍetvā,",
"tha-ap24:52.2": "dāse kammakare bahū;",
"tha-ap24:52.3": "Gotamassa bhagavato,",
"tha-ap24:52.4": "sāsane pabbajissasi.",
"tha-ap24:53.1": "Ārādhayitvā sambuddhaṃ,",
"tha-ap24:53.2": "gotamaṃ sakyapuṅgavaṃ;",
"tha-ap24:53.3": "Upavānoti nāmena,",
"tha-ap24:53.4": "hessasi satthu sāvako’.",
"tha-ap24:54.1": "Satasahasse kataṃ kammaṃ,",
"tha-ap24:54.2": "phalaṃ dassesi me idha;",
"tha-ap24:54.3": "Sumutto saravegova,",
"tha-ap24:54.4": "kilese jhāpayī mama.",
"tha-ap24:55.1": "Cakkavattissa santassa,",
"tha-ap24:55.2": "catudīpissarassa me;",
"tha-ap24:55.3": "Tiyojanāni samantā,",
"tha-ap24:55.4": "ussīsanti dhajā sadā.",
"tha-ap24:56.1": "Satasahassito kappe,",
"tha-ap24:56.2": "yaṃ kammamakariṃ tadā;",
"tha-ap24:56.3": "Duggatiṃ nābhijānāmi,",
"tha-ap24:56.4": "dhajadānassidaṃ phalaṃ.",
"tha-ap24:57.1": "Paṭisambhidā catasso,",
"tha-ap24:57.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap24:57.3": "Chaḷabhiññā sacchikatā,",
"tha-ap24:57.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap24:58.1": "Itthaṃ sudaṃ āyasmā upavāno thero imā gāthāyo abhāsitthāti.",
"tha-ap24:59.1": "Upavānattherassāpadānaṃ dutiyaṃ."
}