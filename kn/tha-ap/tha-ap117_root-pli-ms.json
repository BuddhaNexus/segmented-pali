{
"tha-ap117:1.1": "Therāpadāna",
"tha-ap117:2.1": "Mahāparivāravagga",
"tha-ap117:3.1": "5. Suvaṇṇapupphiyattheraapadāna",
"tha-ap117:4.1": "“Vipassī nāma bhagavā,",
"tha-ap117:4.2": "lokajeṭṭho narāsabho;",
"tha-ap117:4.3": "Nisinno janakāyassa,",
"tha-ap117:4.4": "desesi amataṃ padaṃ.",
"tha-ap117:5.1": "Tassāhaṃ dhammaṃ sutvāna,",
"tha-ap117:5.2": "dvipadindassa tādino;",
"tha-ap117:5.3": "Soṇṇapupphāni cattāri,",
"tha-ap117:5.4": "buddhassa abhiropayiṃ.",
"tha-ap117:6.1": "Suvaṇṇacchadanaṃ āsi,",
"tha-ap117:6.2": "yāvatā parisā tadā;",
"tha-ap117:6.3": "Buddhābhā ca suvaṇṇābhā,",
"tha-ap117:6.4": "āloko vipulo ahu.",
"tha-ap117:7.1": "Udaggacitto sumano,",
"tha-ap117:7.2": "vedajāto katañjalī;",
"tha-ap117:7.3": "Vittisañjanano tesaṃ,",
"tha-ap117:7.4": "diṭṭhadhammasukhāvaho.",
"tha-ap117:8.1": "Āyācitvāna sambuddhaṃ,",
"tha-ap117:8.2": "vanditvāna ca subbataṃ;",
"tha-ap117:8.3": "Pāmojjaṃ janayitvāna,",
"tha-ap117:8.4": "sakaṃ bhavanupāgamiṃ.",
"tha-ap117:9.1": "Bhavane upaviṭṭhohaṃ,",
"tha-ap117:9.2": "buddhaseṭṭhaṃ anussariṃ;",
"tha-ap117:9.3": "Tena cittappasādena,",
"tha-ap117:9.4": "tusitaṃ upapajjahaṃ.",
"tha-ap117:10.1": "Ekanavutito kappe,",
"tha-ap117:10.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap117:10.3": "Duggatiṃ nābhijānāmi,",
"tha-ap117:10.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap117:11.1": "Soḷasāsiṃsu rājāno,",
"tha-ap117:11.2": "nemisammatanāmakā;",
"tha-ap117:11.3": "Tetālīse ito kappe,",
"tha-ap117:11.4": "cakkavattī mahabbalā.",
"tha-ap117:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap117:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap117:13.1": "Itthaṃ sudaṃ āyasmā suvaṇṇapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap117:14.1": "Suvaṇṇapupphiyattherassāpadānaṃ pañcamaṃ."
}