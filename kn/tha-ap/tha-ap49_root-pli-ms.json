{
"tha-ap49:1.1": "Therāpadāna",
"tha-ap49:2.1": "Upālivagga",
"tha-ap49:3.1": "7. Sayanadāyakattheraapadāna",
"tha-ap49:4.1": "“Siddhatthassa bhagavato,",
"tha-ap49:4.2": "mettacittassa tādino;",
"tha-ap49:4.3": "Sayanaggaṃ mayā dinnaṃ,",
"tha-ap49:4.4": "dussabhaṇḍehi atthataṃ.",
"tha-ap49:5.1": "Paṭiggahesi bhagavā,",
"tha-ap49:5.2": "kappiyaṃ sayanāsanaṃ;",
"tha-ap49:5.3": "Uṭṭhāya sayanā tamhā,",
"tha-ap49:5.4": "vehāsaṃ uggamī jino.",
"tha-ap49:6.1": "Catunnavutito kappe,",
"tha-ap49:6.2": "yaṃ sayanamadāsahaṃ;",
"tha-ap49:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap49:6.4": "sayanassa idaṃ phalaṃ.",
"tha-ap49:7.1": "Ekapaññāsito kappe,",
"tha-ap49:7.2": "varako devasavhayo;",
"tha-ap49:7.3": "Sattaratanasampanno,",
"tha-ap49:7.4": "cakkavattī mahabbalo.",
"tha-ap49:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap49:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap49:9.1": "Itthaṃ sudaṃ āyasmā sayanadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap49:10.1": "Sayanadāyakattherassāpadānaṃ sattamaṃ."
}