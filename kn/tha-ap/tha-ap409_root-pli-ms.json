{
"tha-ap409:1.1": "Therāpadāna",
"tha-ap409:2.1": "Metteyyavagga",
"tha-ap409:3.1": "7. Hemakattheraapadāna",
"tha-ap409:4.1": "“Pabbhārakūṭaṃ nissāya,",
"tha-ap409:4.2": "anomo nāma tāpaso;",
"tha-ap409:4.3": "Assamaṃ sukataṃ katvā,",
"tha-ap409:4.4": "paṇṇasāle vasī tadā.",
"tha-ap409:5.1": "Siddhaṃ tassa tapo kammaṃ,",
"tha-ap409:5.2": "siddhipatto sake bale;",
"tha-ap409:5.3": "Sakasāmaññavikkanto,",
"tha-ap409:5.4": "ātāpī nipako muni.",
"tha-ap409:6.1": "Visārado sasamaye,",
"tha-ap409:6.2": "paravāde ca kovido;",
"tha-ap409:6.3": "Paṭṭho bhūmantalikkhamhi,",
"tha-ap409:6.4": "uppātamhi ca kovido.",
"tha-ap409:7.1": "Vītasoko nirārambho,",
"tha-ap409:7.2": "appāhāro alolupo;",
"tha-ap409:7.3": "Lābhālābhena santuṭṭho,",
"tha-ap409:7.4": "jhāyī jhānarato muni.",
"tha-ap409:8.1": "Piyadassī nāma sambuddho,",
"tha-ap409:8.2": "aggo kāruṇiko muni;",
"tha-ap409:8.3": "Satte tāretukāmo so,",
"tha-ap409:8.4": "karuṇāya pharī tadā.",
"tha-ap409:9.1": "Bodhaneyyaṃ janaṃ disvā,",
"tha-ap409:9.2": "piyadassī mahāmuni;",
"tha-ap409:9.3": "Cakkavāḷasahassampi,",
"tha-ap409:9.4": "gantvā ovadate muni.",
"tha-ap409:10.1": "Mamuddharitukāmo so,",
"tha-ap409:10.2": "mamassamamupāgami;",
"tha-ap409:10.3": "Na diṭṭho me jino pubbe,",
"tha-ap409:10.4": "na sutopi ca kassaci.",
"tha-ap409:11.1": "Uppātā supinā mayhaṃ,",
"tha-ap409:11.2": "lakkhaṇā suppakāsitā;",
"tha-ap409:11.3": "Paṭṭho bhūmantalikkhamhi,",
"tha-ap409:11.4": "nakkhattapadakovido.",
"tha-ap409:12.1": "Sohaṃ buddhassa sutvāna,",
"tha-ap409:12.2": "tattha cittaṃ pasādayiṃ;",
"tha-ap409:12.3": "Tiṭṭhanto vā nisinno vā,",
"tha-ap409:12.4": "sarāmi niccakālikaṃ.",
"tha-ap409:13.1": "Mayi evaṃ sarantamhi,",
"tha-ap409:13.2": "bhagavāpi anussari;",
"tha-ap409:13.3": "Buddhaṃ anussarantassa,",
"tha-ap409:13.4": "pīti me hoti tāvade.",
"tha-ap409:14.1": "Kālañca punarāgamma,",
"tha-ap409:14.2": "upesi maṃ mahāmuni;",
"tha-ap409:14.3": "Sampattepi na jānāmi,",
"tha-ap409:14.4": "ayaṃ buddho mahāmuni.",
"tha-ap409:15.1": "Anukampako kāruṇiko,",
"tha-ap409:15.2": "piyadassī mahāmuni;",
"tha-ap409:15.3": "Sañjānāpesi attānaṃ,",
"tha-ap409:15.4": "‘ahaṃ buddho sadevake’.",
"tha-ap409:16.1": "Sañjānitvāna sambuddhaṃ,",
"tha-ap409:16.2": "piyadassiṃ mahāmuniṃ;",
"tha-ap409:16.3": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap409:16.4": "idaṃ vacanamabraviṃ.",
"tha-ap409:17.1": "‘Aññe pīṭhe ca pallaṅke,",
"tha-ap409:17.2": "āsandīsu nisīdare;",
"tha-ap409:17.3": "Tuvampi sabbadassāvī,",
"tha-ap409:17.4": "nisīda ratanāsane’.",
"tha-ap409:18.1": "Sabbaratanamayaṃ pīṭhaṃ,",
"tha-ap409:18.2": "nimminitvāna tāvade;",
"tha-ap409:18.3": "Piyadassissa munino,",
"tha-ap409:18.4": "adāsiṃ iddhinimmitaṃ.",
"tha-ap409:19.1": "Ratane ca nisinnassa,",
"tha-ap409:19.2": "pīṭhake iddhinimmite;",
"tha-ap409:19.3": "Kumbhamattaṃ jambuphalaṃ,",
"tha-ap409:19.4": "adāsiṃ tāvade ahaṃ.",
"tha-ap409:20.1": "Mama hāsaṃ janetvāna,",
"tha-ap409:20.2": "paribhuñji mahāmuni;",
"tha-ap409:20.3": "Tadā cittaṃ pasādetvā,",
"tha-ap409:20.4": "satthāraṃ abhivādayiṃ.",
"tha-ap409:21.1": "Piyadassī tu bhagavā,",
"tha-ap409:21.2": "lokajeṭṭho narāsabho;",
"tha-ap409:21.3": "Ratanāsanamāsīno,",
"tha-ap409:21.4": "imā gāthā abhāsatha.",
"tha-ap409:22.1": "‘Yo me ratanamayaṃ pīṭhaṃ,",
"tha-ap409:22.2": "amatañca phalaṃ adā;",
"tha-ap409:22.3": "Tamahaṃ kittayissāmi,",
"tha-ap409:22.4": "suṇātha mama bhāsato.",
"tha-ap409:23.1": "Sattasattati kappāni,",
"tha-ap409:23.2": "devaloke ramissati;",
"tha-ap409:23.3": "Pañcasattatikkhattuñca,",
"tha-ap409:23.4": "cakkavattī bhavissati.",
"tha-ap409:24.1": "Dvattiṃsakkhattuṃ devindo,",
"tha-ap409:24.2": "devarajjaṃ karissati;",
"tha-ap409:24.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap409:24.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap409:25.1": "Soṇṇamayaṃ rūpimayaṃ,",
"tha-ap409:25.2": "pallaṅkaṃ sukataṃ bahuṃ;",
"tha-ap409:25.3": "Lohitaṅgamayañceva,",
"tha-ap409:25.4": "lacchati ratanāmayaṃ.",
"tha-ap409:26.1": "Caṅkamantampi manujaṃ,",
"tha-ap409:26.2": "puññakammasamaṅginaṃ;",
"tha-ap409:26.3": "Pallaṅkāni anekāni,",
"tha-ap409:26.4": "parivāressare tadā.",
"tha-ap409:27.1": "Kūṭāgārā ca pāsādā,",
"tha-ap409:27.2": "sayanañca mahārahaṃ;",
"tha-ap409:27.3": "Imassa cittamaññāya,",
"tha-ap409:27.4": "nibbattissanti tāvade.",
"tha-ap409:28.1": "Saṭṭhi nāgasahassāni,",
"tha-ap409:28.2": "sabbālaṅkārabhūsitā;",
"tha-ap409:28.3": "Suvaṇṇakacchā mātaṅgā,",
"tha-ap409:28.4": "hemakappanavāsasā.",
"tha-ap409:29.1": "Ārūḷhā gāmaṇīyehi,",
"tha-ap409:29.2": "tomaraṅkusapāṇibhi;",
"tha-ap409:29.3": "Imaṃ paricarissanti,",
"tha-ap409:29.4": "ratnapīṭhassidaṃ phalaṃ.",
"tha-ap409:30.1": "Saṭṭhi assasahassāni,",
"tha-ap409:30.2": "sabbālaṅkārabhūsitā;",
"tha-ap409:30.3": "Ājānīyāva jātiyā,",
"tha-ap409:30.4": "sindhavā sīghavāhino.",
"tha-ap409:31.1": "Ārūḷhā gāmaṇīyehi,",
"tha-ap409:31.2": "illiyācāpadhāribhi;",
"tha-ap409:31.3": "Tepimaṃ paricarissanti,",
"tha-ap409:31.4": "ratnapīṭhassidaṃ phalaṃ.",
"tha-ap409:32.1": "Saṭṭhi rathasahassāni,",
"tha-ap409:32.2": "sabbālaṅkārabhūsitā;",
"tha-ap409:32.3": "Dīpā athopi veyagghā,",
"tha-ap409:32.4": "sannaddhā ussitaddhajā.",
"tha-ap409:33.1": "Ārūḷhā gāmaṇīyehi,",
"tha-ap409:33.2": "cāpahatthehi vammibhi;",
"tha-ap409:33.3": "Parivāressantimaṃ niccaṃ,",
"tha-ap409:33.4": "ratnapīṭhassidaṃ phalaṃ.",
"tha-ap409:34.1": "Saṭṭhi dhenusahassāni,",
"tha-ap409:34.2": "dohaññā puṅgavūsabhe;",
"tha-ap409:34.3": "Vacchake janayissanti,",
"tha-ap409:34.4": "ratnapīṭhassidaṃ phalaṃ.",
"tha-ap409:35.1": "Soḷasitthisahassāni,",
"tha-ap409:35.2": "sabbālaṅkārabhūsitā;",
"tha-ap409:35.3": "Vicittavatthābharaṇā,",
"tha-ap409:35.4": "āmukkamaṇikuṇḍalā.",
"tha-ap409:36.1": "Aḷārapamhā hasulā,",
"tha-ap409:36.2": "susaññā tanumajjhimā;",
"tha-ap409:36.3": "Parivāressantimaṃ niccaṃ,",
"tha-ap409:36.4": "ratnapīṭhassidaṃ phalaṃ.",
"tha-ap409:37.1": "Aṭṭhārase kappasate,",
"tha-ap409:37.2": "gotamo nāma cakkhumā;",
"tha-ap409:37.3": "Tamandhakāraṃ vidhamitvā,",
"tha-ap409:37.4": "buddho loke bhavissati.",
"tha-ap409:38.1": "Tassa dassanamāgamma,",
"tha-ap409:38.2": "pabbajissatikiñcano;",
"tha-ap409:38.3": "Tosayitvāna satthāraṃ,",
"tha-ap409:38.4": "sāsanebhiramissati.",
"tha-ap409:39.1": "Tassa dhammaṃ suṇitvāna,",
"tha-ap409:39.2": "kilese ghātayissati;",
"tha-ap409:39.3": "Sabbāsave pariññāya,",
"tha-ap409:39.4": "nibbāyissatināsavo’.",
"tha-ap409:40.1": "Vīriyaṃ me dhuradhorayhaṃ,",
"tha-ap409:40.2": "yogakkhemādhivāhanaṃ;",
"tha-ap409:40.3": "Uttamatthaṃ patthayanto,",
"tha-ap409:40.4": "sāsane viharāmahaṃ.",
"tha-ap409:41.1": "Idaṃ pacchimakaṃ mayhaṃ,",
"tha-ap409:41.2": "carimo vattate bhavo;",
"tha-ap409:41.3": "Sabbāsavā parikkhīṇā,",
"tha-ap409:41.4": "natthi dāni punabbhavo.",
"tha-ap409:42.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap409:42.4": "viharāmi anāsavo.",
"tha-ap409:43.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap409:43.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap409:44.1": "Paṭisambhidā catasso, … pe …",
"tha-ap409:44.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap409:45.1": "Itthaṃ sudaṃ āyasmā hemako thero imā gāthāyo abhāsitthāti.",
"tha-ap409:46.1": "Hemakattherassāpadānaṃ sattamaṃ.",
"tha-ap409:46.2": "Sattarasamaṃ bhāṇavāraṃ."
}