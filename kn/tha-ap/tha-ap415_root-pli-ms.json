{
"tha-ap415:1.1": "Therāpadāna",
"tha-ap415:2.1": "Bhaddālivagga",
"tha-ap415:3.1": "3 Tiṇasūlakachādaniyattheraapadāna",
"tha-ap415:4.1": "“Jātiṃ jarañca maraṇaṃ,",
"tha-ap415:4.2": "paccavekkhiṃ ahaṃ tadā;",
"tha-ap415:4.3": "Ekako abhinikkhamma,",
"tha-ap415:4.4": "pabbajiṃ anagāriyaṃ.",
"tha-ap415:5.1": "Caramānonupubbena,",
"tha-ap415:5.2": "gaṅgātīraṃ upāgamiṃ;",
"tha-ap415:5.3": "Tatthaddasāsiṃ pathaviṃ,",
"tha-ap415:5.4": "gaṅgātīre samunnataṃ.",
"tha-ap415:6.1": "Assamaṃ tattha māpetvā,",
"tha-ap415:6.2": "vasāmi assame ahaṃ;",
"tha-ap415:6.3": "Sukato caṅkamo mayhaṃ,",
"tha-ap415:6.4": "nānādijagaṇāyuto.",
"tha-ap415:7.1": "Mamupenti ca vissatthā,",
"tha-ap415:7.2": "kūjanti ca manoharaṃ;",
"tha-ap415:7.3": "Ramamāno saha tehi,",
"tha-ap415:7.4": "vasāmi assame ahaṃ.",
"tha-ap415:8.1": "Mama assamasāmantā,",
"tha-ap415:8.2": "migarājā catukkamo;",
"tha-ap415:8.3": "Āsayā abhinikkhamma,",
"tha-ap415:8.4": "gajji so asanī viya.",
"tha-ap415:9.1": "Nadite migarāje ca,",
"tha-ap415:9.2": "hāso me udapajjatha;",
"tha-ap415:9.3": "Migarājaṃ gavesanto,",
"tha-ap415:9.4": "addasaṃ lokanāyakaṃ.",
"tha-ap415:10.1": "Disvānāhaṃ devadevaṃ,",
"tha-ap415:10.2": "tissaṃ lokagganāyakaṃ;",
"tha-ap415:10.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap415:10.4": "pūjayiṃ nāgakesaraṃ.",
"tha-ap415:11.1": "Uggacchantaṃva sūriyaṃ,",
"tha-ap415:11.2": "sālarājaṃva pupphitaṃ;",
"tha-ap415:11.3": "Osadhiṃva virocantaṃ,",
"tha-ap415:11.4": "santhaviṃ lokanāyakaṃ.",
"tha-ap415:12.1": "‘Tava ñāṇena sabbaññu,",
"tha-ap415:12.2": "mocesimaṃ sadevakaṃ;",
"tha-ap415:12.3": "Tavaṃ ārādhayitvāna,",
"tha-ap415:12.4": "jātiyā parimuccare.",
"tha-ap415:13.1": "Adassanena sabbaññu,",
"tha-ap415:13.2": "buddhānaṃ sabbadassinaṃ;",
"tha-ap415:13.3": "Patantivīcinirayaṃ,",
"tha-ap415:13.4": "rāgadosehi ophuṭā.",
"tha-ap415:14.1": "Tava dassanamāgamma,",
"tha-ap415:14.2": "sabbaññu lokanāyaka;",
"tha-ap415:14.3": "Pamuccanti bhavā sabbā,",
"tha-ap415:14.4": "phusanti amataṃ padaṃ.",
"tha-ap415:15.1": "Yadā buddhā cakkhumanto,",
"tha-ap415:15.2": "uppajjanti pabhaṅkarā;",
"tha-ap415:15.3": "Kilese jhāpayitvāna,",
"tha-ap415:15.4": "ālokaṃ dassayanti te’.",
"tha-ap415:16.1": "Kittayitvāna sambuddhaṃ,",
"tha-ap415:16.2": "tissaṃ lokagganāyakaṃ;",
"tha-ap415:16.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap415:16.4": "tiṇasūlaṃ apūjayiṃ.",
"tha-ap415:17.1": "Mama saṅkappamaññāya,",
"tha-ap415:17.2": "tisso lokagganāyako;",
"tha-ap415:17.3": "Sakāsane nisīditvā,",
"tha-ap415:17.4": "imā gāthā abhāsatha.",
"tha-ap415:18.1": "‘Yo maṃ pupphehi chādesi,",
"tha-ap415:18.2": "pasanno sehi pāṇibhi;",
"tha-ap415:18.3": "Tamahaṃ kittayissāmi,",
"tha-ap415:18.4": "suṇātha mama bhāsato.",
"tha-ap415:19.1": "Pañcavīsatikkhattuṃ so,",
"tha-ap415:19.2": "devarajjaṃ karissati;",
"tha-ap415:19.3": "Pañcasattatikkhattuñca,",
"tha-ap415:19.4": "cakkavattī bhavissati.",
"tha-ap415:20.1": "Padesarajjaṃ vipulaṃ,",
"tha-ap415:20.2": "gaṇanāto asaṅkhiyaṃ;",
"tha-ap415:20.3": "Tassa kammanissandena,",
"tha-ap415:20.4": "pupphānaṃ pūjanāya ca.",
"tha-ap415:21.1": "Sīsaṃnhāto cayaṃ poso,",
"tha-ap415:21.2": "pupphamākaṅkhate yadi;",
"tha-ap415:21.3": "Puññakammena saṃyuttaṃ,",
"tha-ap415:21.4": "purato pātubhavissati.",
"tha-ap415:22.1": "Yaṃ yaṃ icchati kāmehi,",
"tha-ap415:22.2": "taṃ taṃ pātubhavissati;",
"tha-ap415:22.3": "Saṅkappaṃ paripūretvā,",
"tha-ap415:22.4": "nibbāyissatināsavo’.",
"tha-ap415:23.1": "Aṭṭhārasamaṃ bhāṇavāraṃ.",
"tha-ap415:24.1": "Kilese jhāpayitvāna,",
"tha-ap415:24.2": "sampajāno patissato;",
"tha-ap415:24.3": "Ekāsane nisīditvā,",
"tha-ap415:24.4": "arahattamapāpuṇiṃ.",
"tha-ap415:25.1": "Caṅkamanto nipajjanto,",
"tha-ap415:25.2": "nisinno uda vā ṭhito;",
"tha-ap415:25.3": "Buddhaseṭṭhaṃ saritvāna,",
"tha-ap415:25.4": "viharāmi ahaṃ sadā.",
"tha-ap415:26.1": "Cīvare piṇḍapāte ca,",
"tha-ap415:26.2": "paccaye sayanāsane;",
"tha-ap415:26.3": "Tattha me ūnatā natthi,",
"tha-ap415:26.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap415:27.1": "So dāni patto amataṃ,",
"tha-ap415:27.2": "santaṃ padamanuttaraṃ;",
"tha-ap415:27.3": "Sabbāsave pariññāya,",
"tha-ap415:27.4": "viharāmi anāsavo.",
"tha-ap415:28.1": "Dvenavute ito kappe,",
"tha-ap415:28.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap415:28.3": "Duggatiṃ nābhijānāmi,",
"tha-ap415:28.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap415:29.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap415:29.4": "viharāmi anāsavo.",
"tha-ap415:30.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap415:30.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap415:31.1": "Paṭisambhidā catasso, … pe …",
"tha-ap415:31.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap415:32.1": "Itthaṃ sudaṃ āyasmā tiṇasūlakachādaniyo thero imā gāthāyo abhāsitthāti.",
"tha-ap415:33.1": "Tiṇasūlakachādaniyattherassāpadānaṃ tatiyaṃ."
}