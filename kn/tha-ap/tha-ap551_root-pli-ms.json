{
"tha-ap551:1.1": "Therāpadāna",
"tha-ap551:2.1": "Bhaddiyavagga",
"tha-ap551:3.1": "9. Vanavacchattheraapadāna",
"tha-ap551:4.1": "“Imamhi bhaddake kappe,",
"tha-ap551:4.2": "brahmabandhu mahāyaso;",
"tha-ap551:4.3": "Kassapo nāma gottena,",
"tha-ap551:4.4": "uppajji vadataṃ varo.",
"tha-ap551:5.1": "Tadāhaṃ pabbajitvāna,",
"tha-ap551:5.2": "tassa buddhassa sāsane;",
"tha-ap551:5.3": "Yāvajīvaṃ caritvāna,",
"tha-ap551:5.4": "brahmacāraṃ tato cuto.",
"tha-ap551:6.1": "Tena kammena sukatena,",
"tha-ap551:6.2": "cetanāpaṇidhīhi ca;",
"tha-ap551:6.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap551:6.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap551:7.1": "Tato cuto araññamhi,",
"tha-ap551:7.2": "kapoto āsahaṃ tahiṃ;",
"tha-ap551:7.3": "Vasate guṇasampanno,",
"tha-ap551:7.4": "bhikkhu jhānarato sadā.",
"tha-ap551:8.1": "Mettacitto kāruṇiko,",
"tha-ap551:8.2": "sadā pamuditānano;",
"tha-ap551:8.3": "Upekkhako mahāvīro,",
"tha-ap551:8.4": "appamaññāsu kovido.",
"tha-ap551:9.1": "Vinīvaraṇasaṅkappe,",
"tha-ap551:9.2": "sabbasattahitāsaye;",
"tha-ap551:9.3": "Visaṭṭho nacirenāsiṃ,",
"tha-ap551:9.4": "tasmiṃ sugatasāvake.",
"tha-ap551:10.1": "Upecca pādamūlamhi,",
"tha-ap551:10.2": "nisinnassa tadāssame;",
"tha-ap551:10.3": "Kadāci sāmisaṃ deti,",
"tha-ap551:10.4": "dhammaṃ desesi cekadā.",
"tha-ap551:11.1": "Tadā vipulapemena,",
"tha-ap551:11.2": "upāsitvā jinatrajaṃ;",
"tha-ap551:11.3": "Tato cuto gato saggaṃ,",
"tha-ap551:11.4": "pavāso sagharaṃ yathā.",
"tha-ap551:12.1": "Saggā cuto manussesu,",
"tha-ap551:12.2": "nibbatto puññakammunā;",
"tha-ap551:12.3": "Agāraṃ chaḍḍayitvāna,",
"tha-ap551:12.4": "pabbajiṃ bahuso ahaṃ.",
"tha-ap551:13.1": "Samaṇo tāpaso vippo,",
"tha-ap551:13.2": "paribbajo tathevahaṃ;",
"tha-ap551:13.3": "Hutvā vasiṃ araññamhi,",
"tha-ap551:13.4": "anekasataso ahaṃ.",
"tha-ap551:14.1": "Pacchime ca bhave dāni,",
"tha-ap551:14.2": "ramme kapilavatthave;",
"tha-ap551:14.3": "Vacchagotto dijo tassa,",
"tha-ap551:14.4": "jāyāya ahamokkamiṃ.",
"tha-ap551:15.1": "Mātu me dohaḷo āsi,",
"tha-ap551:15.2": "tirokucchigatassa me;",
"tha-ap551:15.3": "Jāyamānasamīpamhi,",
"tha-ap551:15.4": "vanavāsāya nicchayo.",
"tha-ap551:16.1": "Tato me ajanī mātā,",
"tha-ap551:16.2": "ramaṇīye vanantare;",
"tha-ap551:16.3": "Gabbhato nikkhamantaṃ maṃ,",
"tha-ap551:16.4": "kāsāyena paṭiggahuṃ.",
"tha-ap551:17.1": "Tato kumāro siddhattho,",
"tha-ap551:17.2": "jāto sakyakuladdhajo;",
"tha-ap551:17.3": "Tassa mitto piyo āsiṃ,",
"tha-ap551:17.4": "saṃvisaṭṭho sumāniyo.",
"tha-ap551:18.1": "Sattasārebhinikkhante,",
"tha-ap551:18.2": "ohāya vipulaṃ yasaṃ;",
"tha-ap551:18.3": "Ahampi pabbajitvāna,",
"tha-ap551:18.4": "himavantamupāgamiṃ.",
"tha-ap551:19.1": "Vanālayaṃ bhāvanīyaṃ,",
"tha-ap551:19.2": "kassapaṃ dhutavādikaṃ;",
"tha-ap551:19.3": "Disvā sutvā jinuppādaṃ,",
"tha-ap551:19.4": "upesiṃ narasārathiṃ.",
"tha-ap551:20.1": "So me dhammamadesesi,",
"tha-ap551:20.2": "sabbatthaṃ sampakāsayaṃ;",
"tha-ap551:20.3": "Tatohaṃ pabbajitvāna,",
"tha-ap551:20.4": "vanameva punāgamaṃ.",
"tha-ap551:21.1": "Tatthāppamatto viharaṃ,",
"tha-ap551:21.2": "chaḷabhiññā aphassayiṃ;",
"tha-ap551:21.3": "Aho suladdhalābhomhi,",
"tha-ap551:21.4": "sumittenānukampito.",
"tha-ap551:22.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap551:22.4": "viharāmi anāsavo.",
"tha-ap551:23.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap551:23.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap551:24.1": "Paṭisambhidā catasso, … pe …",
"tha-ap551:24.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap551:25.1": "Itthaṃ sudaṃ āyasmā vanavaccho thero imā gāthāyo abhāsitthāti.",
"tha-ap551:26.1": "Vanavacchattherassāpadānaṃ navamaṃ."
}