{
"tha-ap212:1.1": "Therāpadāna",
"tha-ap212:2.1": "Kaṇikārapupphiyavagga",
"tha-ap212:3.1": "10 Pāpanivāriyattheraapadāna",
"tha-ap212:4.1": "“Tissassa tu bhagavato,",
"tha-ap212:4.2": "devadevassa tādino;",
"tha-ap212:4.3": "Ekacchattaṃ mayā dinnaṃ,",
"tha-ap212:4.4": "vippasannena cetasā.",
"tha-ap212:5.1": "Nivutaṃ hoti me pāpaṃ,",
"tha-ap212:5.2": "kusalassupasampadā;",
"tha-ap212:5.3": "Ākāse chattaṃ dhārenti,",
"tha-ap212:5.4": "pubbakammassidaṃ phalaṃ.",
"tha-ap212:6.1": "Carimaṃ vattate mayhaṃ,",
"tha-ap212:6.2": "bhavā sabbe samūhatā;",
"tha-ap212:6.3": "Dhāremi antimaṃ dehaṃ,",
"tha-ap212:6.4": "sammāsambuddhasāsane.",
"tha-ap212:7.1": "Dvenavute ito kappe,",
"tha-ap212:7.2": "yaṃ chattamadadiṃ tadā;",
"tha-ap212:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap212:7.4": "chattadānassidaṃ phalaṃ.",
"tha-ap212:8.1": "Dvesattatimhito kappe,",
"tha-ap212:8.2": "aṭṭhāsiṃsu janādhipā;",
"tha-ap212:8.3": "Mahānidānanāmena,",
"tha-ap212:8.4": "rājāno cakkavattino.",
"tha-ap212:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap212:9.4": "kataṃ buddhassa sāsanaṃ”. #2314",
"tha-ap212:10.1": "Itthaṃ sudaṃ āyasmā pāpanivāriyo thero imā gāthāyo abhāsitthāti.",
"tha-ap212:11.1": "Pāpanivāriyattherassāpadānaṃ dasamaṃ.",
"tha-ap212:12.1": "Kaṇikārapupphiyavaggo ekavīsatimo.",
"tha-ap212:13.1": "Tassuddānaṃ",
"tha-ap212:14.1": "Kaṇikāro minelañca,",
"tha-ap212:14.2": "kiṅkaṇi taraṇena ca;",
"tha-ap212:14.3": "Nigguṇḍipupphī dakado,",
"tha-ap212:14.4": "salalo ca kuraṇḍako;",
"tha-ap212:14.5": "Ādhārako pāpavārī,",
"tha-ap212:14.6": "aṭṭhatālīsa gāthakāti."
}