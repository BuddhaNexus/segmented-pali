{
"tha-ap522:1.1": "Therāpadāna",
"tha-ap522:2.1": "Phaladāyakavagga",
"tha-ap522:3.1": "10 Padumadhārikattheraapadāna",
"tha-ap522:4.1": "“Himavantassāvidūre,",
"tha-ap522:4.2": "romaso nāma pabbato;",
"tha-ap522:4.3": "Buddhopi sambhavo nāma,",
"tha-ap522:4.4": "abbhokāse vasī tadā.",
"tha-ap522:5.1": "Bhavanā nikkhamitvāna,",
"tha-ap522:5.2": "padumaṃ dhārayiṃ ahaṃ;",
"tha-ap522:5.3": "Ekāhaṃ dhārayitvāna,",
"tha-ap522:5.4": "bhavanaṃ punarāgamiṃ.",
"tha-ap522:6.1": "Ekatiṃse ito kappe,",
"tha-ap522:6.2": "yaṃ buddhamabhipūjayiṃ;",
"tha-ap522:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap522:6.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap522:7.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap522:7.4": "viharāmi anāsavo.",
"tha-ap522:8.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap522:8.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap522:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap522:9.4": "kataṃ buddhassa sāsanaṃ”. #5449",
"tha-ap522:10.1": "Itthaṃ sudaṃ āyasmā padumadhāriko thero imā gāthāyo abhāsitthāti.",
"tha-ap522:11.1": "Padumadhārikattherassāpadānaṃ dasamaṃ.",
"tha-ap522:12.1": "Phaladāyakavaggo dvepaññāsamo.",
"tha-ap522:13.1": "Tassuddānaṃ",
"tha-ap522:14.1": "Kurañciyaṃ kapitthañca,",
"tha-ap522:14.2": "kosambamatha ketakaṃ;",
"tha-ap522:14.3": "Nāgapupphajjunañceva,",
"tha-ap522:14.4": "kuṭajī ghosasaññako.",
"tha-ap522:15.1": "Thero ca sabbaphalado,",
"tha-ap522:15.2": "tathā padumadhāriko;",
"tha-ap522:15.3": "Asīti cettha gāthāyo,",
"tha-ap522:15.4": "tisso gāthā taduttari."
}