{
"tha-ap412:1.1": "Therāpadāna",
"tha-ap412:2.1": "Metteyyavagga",
"tha-ap412:3.1": "10. Udenattheraapadāna",
"tha-ap412:4.1": "“Himavantassāvidūre,",
"tha-ap412:4.2": "padumo nāma pabbato;",
"tha-ap412:4.3": "Assamo sukato mayhaṃ,",
"tha-ap412:4.4": "paṇṇasālā sumāpitā.",
"tha-ap412:5.1": "Nadiyo sandare tattha,",
"tha-ap412:5.2": "supatitthā manoramā;",
"tha-ap412:5.3": "Acchodakā sītajalā,",
"tha-ap412:5.4": "sandare nadiyo sadā.",
"tha-ap412:6.1": "Pāṭhīnā pāvusā macchā,",
"tha-ap412:6.2": "balajā muñjarohitā;",
"tha-ap412:6.3": "Sobhentā nadiyo ete,",
"tha-ap412:6.4": "vasanti nadiyā sadā.",
"tha-ap412:7.1": "Ambajambūhi sañchannā,",
"tha-ap412:7.2": "kareritilakā tathā;",
"tha-ap412:7.3": "Uddālakā pāṭaliyo,",
"tha-ap412:7.4": "sobhenti mama assamaṃ.",
"tha-ap412:8.1": "Aṅkolakā bimbijālā,",
"tha-ap412:8.2": "māyākārī ca pupphitā;",
"tha-ap412:8.3": "Gandhena upavāyantā,",
"tha-ap412:8.4": "sobhenti mama assamaṃ.",
"tha-ap412:9.1": "Atimuttā sattalikā,",
"tha-ap412:9.2": "nāgā sālā ca pupphitā;",
"tha-ap412:9.3": "Dibbagandhaṃ sampavantā,",
"tha-ap412:9.4": "sobhenti mama assamaṃ.",
"tha-ap412:10.1": "Kosambā saḷalā nīpā,",
"tha-ap412:10.2": "aṭṭhaṅgāpi ca pupphitā;",
"tha-ap412:10.3": "Dibbagandhaṃ sampavantā,",
"tha-ap412:10.4": "sobhenti mama assamaṃ.",
"tha-ap412:11.1": "Harītakā āmalakā,",
"tha-ap412:11.2": "ambajambuvibhītakā;",
"tha-ap412:11.3": "Kolā bhallātakā billā,",
"tha-ap412:11.4": "phalāni bahu assame.",
"tha-ap412:12.1": "Kalambā kandalī tattha,",
"tha-ap412:12.2": "pupphanti mama assame;",
"tha-ap412:12.3": "Dibbagandhaṃ sampavantā,",
"tha-ap412:12.4": "sobhenti mama assamaṃ.",
"tha-ap412:13.1": "Asokapiṇḍivārī ca,",
"tha-ap412:13.2": "nimbarukkhā ca pupphitā;",
"tha-ap412:13.3": "Dibbagandhaṃ sampavantā,",
"tha-ap412:13.4": "sobhenti mama assamaṃ.",
"tha-ap412:14.1": "Punnāgā giripunnāgā,",
"tha-ap412:14.2": "timirā tattha pupphitā;",
"tha-ap412:14.3": "Dibbagandhaṃ sampavantā,",
"tha-ap412:14.4": "sobhenti mama assamaṃ.",
"tha-ap412:15.1": "Nigguṇḍī sirinigguṇḍī,",
"tha-ap412:15.2": "camparukkhettha pupphitā;",
"tha-ap412:15.3": "Dibbagandhaṃ sampavantā,",
"tha-ap412:15.4": "sobhenti mama assamaṃ.",
"tha-ap412:16.1": "Avidūre pokkharaṇī,",
"tha-ap412:16.2": "cakkavākūpakūjitā;",
"tha-ap412:16.3": "Mandālakehi sañchannā,",
"tha-ap412:16.4": "padumuppalakehi ca.",
"tha-ap412:17.1": "Acchodakā sītajalā,",
"tha-ap412:17.2": "supatitthā manoramā;",
"tha-ap412:17.3": "Acchā phalikasamānā,",
"tha-ap412:17.4": "sobhenti mama assamaṃ.",
"tha-ap412:18.1": "Padumā pupphare tattha,",
"tha-ap412:18.2": "puṇḍarīkā ca uppalā;",
"tha-ap412:18.3": "Mandālakehi sañchannā,",
"tha-ap412:18.4": "sobhenti mama assamaṃ.",
"tha-ap412:19.1": "Pāṭhīnā pāvusā macchā,",
"tha-ap412:19.2": "balajā muñjarohitā;",
"tha-ap412:19.3": "Vicarantāva te tattha,",
"tha-ap412:19.4": "sobhenti mama assamaṃ.",
"tha-ap412:20.1": "Kumbhīlā susumārā ca,",
"tha-ap412:20.2": "kacchapā ca gahā bahū;",
"tha-ap412:20.3": "Ogahā ajagarā ca,",
"tha-ap412:20.4": "sobhenti mama assamaṃ.",
"tha-ap412:21.1": "Pārevatā ravihaṃsā,",
"tha-ap412:21.2": "cakkavākā nadīcarā;",
"tha-ap412:21.3": "Dindibhā sāḷikā cettha,",
"tha-ap412:21.4": "sobhenti mama assamaṃ.",
"tha-ap412:22.1": "Nayitā ambagandhī ca,",
"tha-ap412:22.2": "ketakā tattha pupphitā;",
"tha-ap412:22.3": "Dibbagandhaṃ sampavantā,",
"tha-ap412:22.4": "sobhenti mama assamaṃ.",
"tha-ap412:23.1": "Sīhā byagghā ca dīpī ca,",
"tha-ap412:23.2": "acchakokataracchakā;",
"tha-ap412:23.3": "Anusañcarantā pavane,",
"tha-ap412:23.4": "sobhenti mama assamaṃ.",
"tha-ap412:24.1": "Jaṭābhārena bharitā,",
"tha-ap412:24.2": "ajinuttaravāsanā;",
"tha-ap412:24.3": "Anusañcarantā pavane,",
"tha-ap412:24.4": "sobhenti mama assamaṃ.",
"tha-ap412:25.1": "Ajinānidharā ete,",
"tha-ap412:25.2": "nipakā santavuttino;",
"tha-ap412:25.3": "Appāhārāva te sabbe,",
"tha-ap412:25.4": "sobhenti mama assamaṃ.",
"tha-ap412:26.1": "Khāribhāraṃ gahetvāna,",
"tha-ap412:26.2": "ajjhogayha vanaṃ tadā;",
"tha-ap412:26.3": "Mūlaphalāni bhuñjantā,",
"tha-ap412:26.4": "vasanti assame tadā.",
"tha-ap412:27.1": "Na te dāruṃ āharanti,",
"tha-ap412:27.2": "udakaṃ pādadhovanaṃ;",
"tha-ap412:27.3": "Sabbesaṃ ānubhāvena,",
"tha-ap412:27.4": "sayamevāharīyati.",
"tha-ap412:28.1": "Cullāsītisahassāni,",
"tha-ap412:28.2": "isayettha samāgatā;",
"tha-ap412:28.3": "Sabbeva jhāyino ete,",
"tha-ap412:28.4": "uttamatthagavesakā.",
"tha-ap412:29.1": "Tapassino brahmacārī,",
"tha-ap412:29.2": "codentā appanāva te;",
"tha-ap412:29.3": "Ambarāvacarā sabbe,",
"tha-ap412:29.4": "vasanti assame tadā.",
"tha-ap412:30.1": "Pañcāhaṃ sannipatanti,",
"tha-ap412:30.2": "ekaggā santavuttino;",
"tha-ap412:30.3": "Aññoññaṃ abhivādetvā,",
"tha-ap412:30.4": "pakkamanti disāmukhā.",
"tha-ap412:31.1": "Padumuttaro nāma jino,",
"tha-ap412:31.2": "sabbadhammāna pāragū;",
"tha-ap412:31.3": "Tamandhakāraṃ vidhamaṃ,",
"tha-ap412:31.4": "uppajji tāvade jino.",
"tha-ap412:32.1": "Mama assamasāmantā,",
"tha-ap412:32.2": "yakkho āsi mahiddhiko;",
"tha-ap412:32.3": "So me saṃsittha sambuddhaṃ,",
"tha-ap412:32.4": "jalajuttamanāyakaṃ.",
"tha-ap412:33.1": "‘Esa buddho samuppanno,",
"tha-ap412:33.2": "Padumuttaro mahāmuni;",
"tha-ap412:33.3": "Khippaṃ gantvāna sambuddhaṃ,",
"tha-ap412:33.4": "Payirūpāsa mārisa’.",
"tha-ap412:34.1": "Yakkhassa vacanaṃ sutvā,",
"tha-ap412:34.2": "vippasannena cetasā;",
"tha-ap412:34.3": "Assamaṃ saṃsāmetvāna,",
"tha-ap412:34.4": "nikkhamiṃ vipinā tadā.",
"tha-ap412:35.1": "Ceḷeva ḍayhamānamhi,",
"tha-ap412:35.2": "nikkhamitvāna assamā;",
"tha-ap412:35.3": "Ekarattiṃ nivāsetvā,",
"tha-ap412:35.4": "upagacchiṃ vināyakaṃ.",
"tha-ap412:36.1": "Padumuttaro lokavidū,",
"tha-ap412:36.2": "āhutīnaṃ paṭiggaho;",
"tha-ap412:36.3": "Catusaccaṃ pakāsento,",
"tha-ap412:36.4": "desesi amataṃ padaṃ.",
"tha-ap412:37.1": "Suphullaṃ padumaṃ gayha,",
"tha-ap412:37.2": "upagantvā mahesino;",
"tha-ap412:37.3": "Pasannacitto sumano,",
"tha-ap412:37.4": "buddhassa abhiropayiṃ.",
"tha-ap412:38.1": "Pūjayitvāna sambuddhaṃ,",
"tha-ap412:38.2": "jalajuttamanāyakaṃ;",
"tha-ap412:38.3": "Ekaṃsaṃ ajinaṃ katvā,",
"tha-ap412:38.4": "santhaviṃ lokanāyakaṃ.",
"tha-ap412:39.1": "‘Yena ñāṇena sambuddho,",
"tha-ap412:39.2": "vasatīha anāsavo;",
"tha-ap412:39.3": "Taṃ ñāṇaṃ kittayissāmi,",
"tha-ap412:39.4": "suṇātha mama bhāsato.",
"tha-ap412:40.1": "Saṃsārasotaṃ chinditvā,",
"tha-ap412:40.2": "tāresi sabbapāṇinaṃ;",
"tha-ap412:40.3": "Tava dhammaṃ suṇitvāna,",
"tha-ap412:40.4": "taṇhāsotaṃ taranti te.",
"tha-ap412:41.1": "Tuvaṃ satthā ca ketu ca,",
"tha-ap412:41.2": "dhajo yūpo ca pāṇinaṃ;",
"tha-ap412:41.3": "Parāyaṇo patiṭṭhā ca,",
"tha-ap412:41.4": "dīpo ca dvipaduttama.",
"tha-ap412:42.1": "Yāvatā gaṇino loke,",
"tha-ap412:42.2": "satthavāhā pavuccare;",
"tha-ap412:42.3": "Tuvaṃ aggosi sabbaññu,",
"tha-ap412:42.4": "tava antogadhāva te.",
"tha-ap412:43.1": "Tava ñāṇena sabbaññu,",
"tha-ap412:43.2": "tāresi janataṃ bahuṃ;",
"tha-ap412:43.3": "Tava dassanamāgamma,",
"tha-ap412:43.4": "dukkhassantaṃ karissare.",
"tha-ap412:44.1": "Ye kecime gandhajātā,",
"tha-ap412:44.2": "loke vāyanti cakkhuma;",
"tha-ap412:44.3": "Tava gandhasamo natthi,",
"tha-ap412:44.4": "puññakkhette mahāmune.",
"tha-ap412:45.1": "Tiracchānayoniṃ nirayaṃ,",
"tha-ap412:45.2": "parimocesi cakkhuma;",
"tha-ap412:45.3": "Asaṅkhataṃ padaṃ santaṃ,",
"tha-ap412:45.4": "desesi tvaṃ mahāmune’.",
"tha-ap412:46.1": "Padumuttaro lokavidū,",
"tha-ap412:46.2": "āhutīnaṃ paṭiggaho;",
"tha-ap412:46.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap412:46.4": "imā gāthā abhāsatha.",
"tha-ap412:47.1": "‘Yo me ñāṇaṃ apūjesi,",
"tha-ap412:47.2": "pasanno sehi pāṇibhi;",
"tha-ap412:47.3": "Tamahaṃ kittayissāmi,",
"tha-ap412:47.4": "suṇātha mama bhāsato.",
"tha-ap412:48.1": "Tiṃsakappasahassāni,",
"tha-ap412:48.2": "devaloke ramissati;",
"tha-ap412:48.3": "Sahassakkhattuṃ rājā ca,",
"tha-ap412:48.4": "cakkavattī bhavissati’.",
"tha-ap412:49.1": "Suladdhalābhaṃ laddhomhi,",
"tha-ap412:49.2": "tosayitvāna subbataṃ;",
"tha-ap412:49.3": "Sabbāsave pariññāya,",
"tha-ap412:49.4": "viharāmi anāsavo.",
"tha-ap412:50.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap412:50.4": "viharāmi anāsavo.",
"tha-ap412:51.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap412:51.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap412:52.1": "Paṭisambhidā catasso, … pe …",
"tha-ap412:52.4": "kataṃ buddhassa sāsanaṃ”. #4264",
"tha-ap412:53.1": "Itthaṃ sudaṃ āyasmā udeno thero imā gāthāyo abhāsitthāti.",
"tha-ap412:54.1": "Udenattherassāpadānaṃ dasamaṃ.",
"tha-ap412:55.1": "Metteyyavaggo ekacattālīsamo.",
"tha-ap412:56.1": "Tassuddānaṃ",
"tha-ap412:57.1": "Metteyyo puṇṇako thero,",
"tha-ap412:57.2": "mettagū dhotakopi ca;",
"tha-ap412:57.3": "Upasivo ca nando ca,",
"tha-ap412:57.4": "hemako sattamo tahiṃ.",
"tha-ap412:58.1": "Todeyyo jatukaṇṇī ca,",
"tha-ap412:58.2": "udeno ca mahāyaso;",
"tha-ap412:58.3": "Tīṇi gāthāsatānettha,",
"tha-ap412:58.4": "asīti tīṇi cuttariṃ."
}