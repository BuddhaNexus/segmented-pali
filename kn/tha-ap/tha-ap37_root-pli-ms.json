{
"tha-ap37:1.1": "Therāpadāna",
"tha-ap37:2.1": "Kuṇḍadhānavagga",
"tha-ap37:3.1": "5. Mogharājattheraapadāna",
"tha-ap37:4.1": "“Atthadassī tu bhagavā,",
"tha-ap37:4.2": "sayambhū aparājito;",
"tha-ap37:4.3": "Bhikkhusaṃghaparibyūḷho,",
"tha-ap37:4.4": "rathiyaṃ paṭipajjatha.",
"tha-ap37:5.1": "Sissehi samparivuto,",
"tha-ap37:5.2": "gharamhā abhinikkhamiṃ;",
"tha-ap37:5.3": "Nikkhamitvānahaṃ tattha,",
"tha-ap37:5.4": "addasaṃ lokanāyakaṃ.",
"tha-ap37:6.1": "Abhivādiya sambuddhaṃ,",
"tha-ap37:6.2": "sire katvāna añjaliṃ;",
"tha-ap37:6.3": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap37:6.4": "santhaviṃ lokanāyakaṃ.",
"tha-ap37:7.1": "Yāvatā rūpino sattā,",
"tha-ap37:7.2": "arūpī vā asaññino;",
"tha-ap37:7.3": "Sabbe te tava ñāṇamhi,",
"tha-ap37:7.4": "anto honti samogadhā.",
"tha-ap37:8.1": "Sukhumacchikajālena,",
"tha-ap37:8.2": "udakaṃ yo parikkhipe;",
"tha-ap37:8.3": "Ye keci udake pāṇā,",
"tha-ap37:8.4": "antojāle bhavanti te.",
"tha-ap37:9.1": "Yesañca cetanā atthi,",
"tha-ap37:9.2": "rūpino ca arūpino;",
"tha-ap37:9.3": "Sabbe te tava ñāṇamhi,",
"tha-ap37:9.4": "anto honti samogadhā.",
"tha-ap37:10.1": "Samuddharasimaṃ lokaṃ,",
"tha-ap37:10.2": "andhakārasamākulaṃ;",
"tha-ap37:10.3": "Tava dhammaṃ suṇitvāna,",
"tha-ap37:10.4": "kaṅkhāsotaṃ taranti te.",
"tha-ap37:11.1": "Avijjānivute loke,",
"tha-ap37:11.2": "andhakārena otthaṭe;",
"tha-ap37:11.3": "Tava ñāṇamhi jotante,",
"tha-ap37:11.4": "andhakārā padhaṃsitā.",
"tha-ap37:12.1": "Tuvaṃ cakkhūsi sabbesaṃ,",
"tha-ap37:12.2": "mahātamapanūdano;",
"tha-ap37:12.3": "Tava dhammaṃ suṇitvāna,",
"tha-ap37:12.4": "nibbāyati bahujjano.",
"tha-ap37:13.1": "Puṭakaṃ pūrayitvāna,",
"tha-ap37:13.2": "madhukhuddamaneḷakaṃ;",
"tha-ap37:13.3": "Ubho hatthehi paggayha,",
"tha-ap37:13.4": "upanesiṃ mahesino.",
"tha-ap37:14.1": "Paṭiggaṇhi mahāvīro,",
"tha-ap37:14.2": "sahatthena mahā isi;",
"tha-ap37:14.3": "Bhuñjitvā tañca sabbaññū,",
"tha-ap37:14.4": "vehāsaṃ nabhamuggami.",
"tha-ap37:15.1": "Antalikkhe ṭhito satthā,",
"tha-ap37:15.2": "atthadassī narāsabho;",
"tha-ap37:15.3": "Mama cittaṃ pasādento,",
"tha-ap37:15.4": "imā gāthā abhāsatha.",
"tha-ap37:16.1": "‘Yenidaṃ thavitaṃ ñāṇaṃ,",
"tha-ap37:16.2": "buddhaseṭṭho ca thomito;",
"tha-ap37:16.3": "Tena cittappasādena,",
"tha-ap37:16.4": "duggatiṃ so na gacchati.",
"tha-ap37:17.1": "Catuddasañcakkhattuṃ so,",
"tha-ap37:17.2": "devarajjaṃ karissati;",
"tha-ap37:17.3": "Pathabyā rajjaṃ aṭṭhasataṃ,",
"tha-ap37:17.4": "vasudhaṃ āvasissati.",
"tha-ap37:18.1": "Pañceva satakkhattuñca,",
"tha-ap37:18.2": "cakkavattī bhavissati;",
"tha-ap37:18.3": "Padesarajjaṃ asaṅkheyyaṃ,",
"tha-ap37:18.4": "mahiyā kārayissati.",
"tha-ap37:19.1": "Ajjhāyako mantadharo,",
"tha-ap37:19.2": "tiṇṇaṃ vedāna pāragū;",
"tha-ap37:19.3": "Gotamassa bhagavato,",
"tha-ap37:19.4": "sāsane pabbajissati.",
"tha-ap37:20.1": "Gambhīraṃ nipuṇaṃ atthaṃ,",
"tha-ap37:20.2": "ñāṇena vicinissati;",
"tha-ap37:20.3": "Mogharājāti nāmena,",
"tha-ap37:20.4": "hessati satthu sāvako.",
"tha-ap37:21.1": "Tīhi vijjāhi sampannaṃ,",
"tha-ap37:21.2": "katakiccamanāsavaṃ;",
"tha-ap37:21.3": "Gotamo satthavāhaggo,",
"tha-ap37:21.4": "etadagge ṭhapessati’.",
"tha-ap37:22.1": "Hitvā mānusakaṃ yogaṃ,",
"tha-ap37:22.2": "chetvāna bhavabandhanaṃ;",
"tha-ap37:22.3": "Sabbāsave pariññāya,",
"tha-ap37:22.4": "viharāmi anāsavo.",
"tha-ap37:23.1": "Paṭisambhidā catasso, … pe …",
"tha-ap37:23.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap37:24.1": "Itthaṃ sudaṃ āyasmā mogharājo thero imā gāthāyo abhāsitthāti.",
"tha-ap37:25.1": "Mogharājattherassāpadānaṃ pañcamaṃ."
}