{
"tha-ap556:1.1": "Therāpadāna",
"tha-ap556:2.1": "Yasavagga",
"tha-ap556:3.1": "4 Kimilattheraapadāna",
"tha-ap556:4.1": "“Nibbute kakusandhamhi,",
"tha-ap556:4.2": "brāhmaṇamhi vusīmati;",
"tha-ap556:4.3": "Gahetvā salalaṃ mālaṃ,",
"tha-ap556:4.4": "maṇḍapaṃ kārayiṃ ahaṃ.",
"tha-ap556:5.1": "Tāvatiṃsaṃ gato santo,",
"tha-ap556:5.2": "labhimha byamhamuttamaṃ;",
"tha-ap556:5.3": "Aññe devetirocāmi,",
"tha-ap556:5.4": "puññakammassidaṃ phalaṃ.",
"tha-ap556:6.1": "Divā vā yadi vā rattiṃ,",
"tha-ap556:6.2": "caṅkamanto ṭhito cahaṃ;",
"tha-ap556:6.3": "Channo salalapupphehi,",
"tha-ap556:6.4": "puññakammassidaṃ phalaṃ.",
"tha-ap556:7.1": "Imasmiṃyeva kappamhi,",
"tha-ap556:7.2": "yaṃ buddhamabhipūjayiṃ;",
"tha-ap556:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap556:7.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap556:8.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap556:8.4": "viharāmi anāsavo.",
"tha-ap556:9.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap556:9.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap556:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap556:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap556:11.1": "Itthaṃ sudaṃ āyasmā kimilo thero imā gāthāyo abhāsitthāti.",
"tha-ap556:12.1": "Kimilattherassāpadānaṃ catutthaṃ."
}