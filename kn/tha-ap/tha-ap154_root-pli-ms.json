{
"tha-ap154:1.1": "Therāpadāna",
"tha-ap154:2.1": "Bandhujīvakavagga",
"tha-ap154:3.1": "2. Tambapupphiyattheraapadāna",
"tha-ap154:4.1": "“Parakammāyane yutto,",
"tha-ap154:4.2": "aparādhaṃ akāsahaṃ;",
"tha-ap154:4.3": "Vanantaṃ abhidhāvissaṃ,",
"tha-ap154:4.4": "bhayaverasamappito.",
"tha-ap154:5.1": "Pupphitaṃ pādapaṃ disvā,",
"tha-ap154:5.2": "piṇḍibandhaṃ sunimmitaṃ;",
"tha-ap154:5.3": "Tambapupphaṃ gahetvāna,",
"tha-ap154:5.4": "bodhiyaṃ okiriṃ ahaṃ.",
"tha-ap154:6.1": "Sammajjitvāna taṃ bodhiṃ,",
"tha-ap154:6.2": "pāṭaliṃ pādaputtamaṃ;",
"tha-ap154:6.3": "Pallaṅkaṃ ābhujitvāna,",
"tha-ap154:6.4": "bodhimūle upāvisiṃ.",
"tha-ap154:7.1": "Gatamaggaṃ gavesantā,",
"tha-ap154:7.2": "āgacchuṃ mama santikaṃ;",
"tha-ap154:7.3": "Te ca disvānahaṃ tattha,",
"tha-ap154:7.4": "āvajjiṃ bodhimuttamaṃ.",
"tha-ap154:8.1": "Vanditvāna ahaṃ bodhiṃ,",
"tha-ap154:8.2": "vippasannena cetasā;",
"tha-ap154:8.3": "Anekatāle papatiṃ,",
"tha-ap154:8.4": "giridugge bhayānake.",
"tha-ap154:9.1": "Ekanavutito kappe,",
"tha-ap154:9.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap154:9.3": "Duggatiṃ nābhijānāmi,",
"tha-ap154:9.4": "bodhipūjāyidaṃ phalaṃ.",
"tha-ap154:10.1": "Ito ca tatiye kappe,",
"tha-ap154:10.2": "rājā susaññato ahaṃ;",
"tha-ap154:10.3": "Sattaratanasampanno,",
"tha-ap154:10.4": "cakkavattī mahabbalo.",
"tha-ap154:11.1": "Paṭisambhidā catasso, … pe …",
"tha-ap154:11.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap154:12.1": "Itthaṃ sudaṃ āyasmā tambapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap154:13.1": "Tambapupphiyattherassāpadānaṃ dutiyaṃ."
}