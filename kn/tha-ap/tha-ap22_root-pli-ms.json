{
"tha-ap22:1.1": "Therāpadāna",
"tha-ap22:2.1": "Sīhāsaniyavagga",
"tha-ap22:3.1": "10. Sumaṅgalattheraapadāna",
"tha-ap22:4.1": "“Āhutiṃ yiṭṭhukāmohaṃ,",
"tha-ap22:4.2": "paṭiyādetvāna bhojanaṃ;",
"tha-ap22:4.3": "Brāhmaṇe paṭimānento,",
"tha-ap22:4.4": "visāle māḷake ṭhito.",
"tha-ap22:5.1": "Athaddasāsiṃ sambuddhaṃ,",
"tha-ap22:5.2": "piyadassiṃ mahāyasaṃ;",
"tha-ap22:5.3": "Sabbalokavinetāraṃ,",
"tha-ap22:5.4": "sayambhuṃ aggapuggalaṃ.",
"tha-ap22:6.1": "Bhagavantaṃ jutimantaṃ,",
"tha-ap22:6.2": "sāvakehi purakkhataṃ;",
"tha-ap22:6.3": "Ādiccamiva rocantaṃ,",
"tha-ap22:6.4": "rathiyaṃ paṭipannakaṃ.",
"tha-ap22:7.1": "Añjaliṃ paggahetvāna,",
"tha-ap22:7.2": "sakaṃ cittaṃ pasādayiṃ;",
"tha-ap22:7.3": "Manasāva nimantesiṃ,",
"tha-ap22:7.4": "‘āgacchatu mahāmuni’.",
"tha-ap22:8.1": "Mama saṅkappamaññāya,",
"tha-ap22:8.2": "satthā loke anuttaro;",
"tha-ap22:8.3": "Khīṇāsavasahassehi,",
"tha-ap22:8.4": "mama dvāraṃ upāgami.",
"tha-ap22:9.1": "Namo te purisājañña,",
"tha-ap22:9.2": "namo te purisuttama;",
"tha-ap22:9.3": "Pāsādaṃ abhirūhitvā,",
"tha-ap22:9.4": "sīhāsane nisīdataṃ.",
"tha-ap22:10.1": "Danto dantaparivāro,",
"tha-ap22:10.2": "tiṇṇo tārayataṃ varo;",
"tha-ap22:10.3": "Pāsādaṃ abhirūhitvā,",
"tha-ap22:10.4": "nisīdi pavarāsane.",
"tha-ap22:11.1": "Yaṃ me atthi sake gehe,",
"tha-ap22:11.2": "āmisaṃ paccupaṭṭhitaṃ;",
"tha-ap22:11.3": "Tāhaṃ buddhassa pādāsiṃ,",
"tha-ap22:11.4": "pasanno sehi pāṇibhi.",
"tha-ap22:12.1": "Pasannacitto sumano,",
"tha-ap22:12.2": "vedajāto katañjalī;",
"tha-ap22:12.3": "Buddhaseṭṭhaṃ namassāmi,",
"tha-ap22:12.4": "aho buddhassuḷāratā.",
"tha-ap22:13.1": "Aṭṭhannaṃ payirūpāsataṃ,",
"tha-ap22:13.2": "bhuñjaṃ khīṇāsavā bahū;",
"tha-ap22:13.3": "Tuyheveso ānubhāvo,",
"tha-ap22:13.4": "saraṇaṃ taṃ upemahaṃ.",
"tha-ap22:14.1": "Piyadassī ca bhagavā,",
"tha-ap22:14.2": "lokajeṭṭho narāsabho;",
"tha-ap22:14.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap22:14.4": "imā gāthā abhāsatha.",
"tha-ap22:15.1": "‘Yo so saṃghaṃ abhojesi,",
"tha-ap22:15.2": "ujubhūtaṃ samāhitaṃ;",
"tha-ap22:15.3": "Tathāgatañca sambuddhaṃ,",
"tha-ap22:15.4": "suṇātha mama bhāsato.",
"tha-ap22:16.1": "Sattavīsatikkhattuṃ so,",
"tha-ap22:16.2": "devarajjaṃ karissati;",
"tha-ap22:16.3": "Sakakammābhiraddho so,",
"tha-ap22:16.4": "devaloke ramissati.",
"tha-ap22:17.1": "Dasa aṭṭha cakkhattuṃ so,",
"tha-ap22:17.2": "cakkavattī bhavissati;",
"tha-ap22:17.3": "Pathabyā rajjaṃ pañcasataṃ,",
"tha-ap22:17.4": "vasudhaṃ āvasissati’.",
"tha-ap22:18.1": "Araññavanamoggayha,",
"tha-ap22:18.2": "kānanaṃ byagghasevitaṃ;",
"tha-ap22:18.3": "Padhānaṃ padahitvāna,",
"tha-ap22:18.4": "kilesā jhāpitā mayā.",
"tha-ap22:19.1": "Aṭṭhārase kappasate,",
"tha-ap22:19.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap22:19.3": "Duggatiṃ nābhijānāmi,",
"tha-ap22:19.4": "bhattadānassidaṃ phalaṃ.",
"tha-ap22:20.1": "Paṭisambhidā catasso,",
"tha-ap22:20.2": "Vimokkhāpi ca aṭṭhime;",
"tha-ap22:20.3": "Chaḷabhiññā sacchikatā,",
"tha-ap22:20.4": "Kataṃ buddhassa sāsanaṃ”. #803",
"tha-ap22:21.1": "Itthaṃ sudaṃ āyasmā sumaṅgalo thero imā gāthāyo abhāsitthāti.",
"tha-ap22:22.1": "Sumaṅgalattherassāpadānaṃ dasamaṃ.",
"tha-ap22:23.1": "Tassuddānaṃ",
"tha-ap22:24.1": "Sīhāsanī ekathambhī,",
"tha-ap22:24.2": "nando ca cūḷapanthako;",
"tha-ap22:24.3": "Pilindarāhulo ceva,",
"tha-ap22:24.4": "vaṅganto raṭṭhapālako.",
"tha-ap22:25.1": "Sopāko maṅgalo ceva,",
"tha-ap22:25.2": "daseva dutiye vagge;",
"tha-ap22:25.3": "Satañca aṭṭhatiṃsa ca,",
"tha-ap22:25.4": "gāthā cettha pakāsitā.",
"tha-ap22:26.1": "Sīhāsaniyavaggo dutiyo."
}