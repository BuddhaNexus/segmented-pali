{
"tha-ap70:1.1": "Therāpadāna",
"tha-ap70:2.1": "Sakacintaniyavagga",
"tha-ap70:3.1": "8. Ambadāyakattheraapadāna",
"tha-ap70:4.1": "“Anomadassī bhagavā,",
"tha-ap70:4.2": "nisinno pabbatantare;",
"tha-ap70:4.3": "Mettāya aphari loke,",
"tha-ap70:4.4": "appamāṇe nirūpadhi.",
"tha-ap70:5.1": "Kapi ahaṃ tadā āsiṃ,",
"tha-ap70:5.2": "himavante naguttame;",
"tha-ap70:5.3": "Disvā anomadassiṃ taṃ,",
"tha-ap70:5.4": "buddhe cittaṃ pasādayiṃ.",
"tha-ap70:6.1": "Avidūre himavantassa,",
"tha-ap70:6.2": "ambāsuṃ phalino tadā;",
"tha-ap70:6.3": "Tato pakkaṃ gahetvāna,",
"tha-ap70:6.4": "ambaṃ samadhukaṃ adaṃ.",
"tha-ap70:7.1": "Taṃ me buddho viyākāsi,",
"tha-ap70:7.2": "anomadassī mahāmuni;",
"tha-ap70:7.3": "Iminā madhudānena,",
"tha-ap70:7.4": "ambadānena cūbhayaṃ.",
"tha-ap70:8.1": "Sattapaññāsakappamhi,",
"tha-ap70:8.2": "devaloke ramissati;",
"tha-ap70:8.3": "Avasesesu kappesu,",
"tha-ap70:8.4": "vokiṇṇaṃ saṃsarissati.",
"tha-ap70:9.1": "Khepetvā pāpakaṃ kammaṃ,",
"tha-ap70:9.2": "paripakkāya buddhiyā;",
"tha-ap70:9.3": "Vinipātamagantvāna,",
"tha-ap70:9.4": "kilese jhāpayissati.",
"tha-ap70:10.1": "Damena uttamenāhaṃ,",
"tha-ap70:10.2": "damitomhi mahesinā;",
"tha-ap70:10.3": "Pattomhi acalaṃ ṭhānaṃ,",
"tha-ap70:10.4": "hitvā jayaparājayaṃ.",
"tha-ap70:11.1": "Sattasattatikappasate,",
"tha-ap70:11.2": "ambaṭṭhajasanāmakā;",
"tha-ap70:11.3": "Catuddasa te rājāno,",
"tha-ap70:11.4": "cakkavattī mahabbalā.",
"tha-ap70:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap70:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap70:13.1": "Itthaṃ sudaṃ āyasmā ambadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap70:14.1": "Ambadāyakattherassāpadānaṃ aṭṭhamaṃ."
}