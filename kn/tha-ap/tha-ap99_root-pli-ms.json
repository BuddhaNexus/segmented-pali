{
"tha-ap99:1.1": "Therāpadāna",
"tha-ap99:2.1": "Sudhāvagga",
"tha-ap99:3.1": "7. Madhupiṇḍikattheraapadāna",
"tha-ap99:4.1": "“Vipine kānane disvā,",
"tha-ap99:4.2": "appasadde nirākule;",
"tha-ap99:4.3": "Siddhatthaṃ isinaṃ seṭṭhaṃ,",
"tha-ap99:4.4": "āhutīnaṃ paṭiggahaṃ.",
"tha-ap99:5.1": "Nibbutattaṃ mahānāgaṃ,",
"tha-ap99:5.2": "nisabhājāniyaṃ yathā;",
"tha-ap99:5.3": "Osadhiṃva virocantaṃ,",
"tha-ap99:5.4": "devasaṅghanamassitaṃ.",
"tha-ap99:6.1": "Vitti mamāhu tāvade,",
"tha-ap99:6.2": "ñāṇaṃ uppajji tāvade;",
"tha-ap99:6.3": "Vuṭṭhitassa samādhimhā,",
"tha-ap99:6.4": "madhuṃ datvāna satthuno.",
"tha-ap99:7.1": "Vanditvā satthuno pāde,",
"tha-ap99:7.2": "pakkāmiṃ pācināmukho;",
"tha-ap99:7.3": "Catuttiṃsamhi kappamhi,",
"tha-ap99:7.4": "rājā āsiṃ sudassano.",
"tha-ap99:8.1": "Madhu bhisehi savati,",
"tha-ap99:8.2": "bhojanamhi ca tāvade;",
"tha-ap99:8.3": "Madhuvassaṃ pavassittha,",
"tha-ap99:8.4": "pubbakammassidaṃ phalaṃ.",
"tha-ap99:9.1": "Catunnavutito kappe,",
"tha-ap99:9.2": "yaṃ madhuṃ adadiṃ tadā;",
"tha-ap99:9.3": "Duggatiṃ nābhijānāmi,",
"tha-ap99:9.4": "madhudānassidaṃ phalaṃ.",
"tha-ap99:10.1": "Catuttiṃse ito kappe,",
"tha-ap99:10.2": "cattāro te sudassanā;",
"tha-ap99:10.3": "Sattaratanasampannā,",
"tha-ap99:10.4": "cakkavattī mahabbalā.",
"tha-ap99:11.1": "Paṭisambhidā catasso, … pe …",
"tha-ap99:11.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap99:12.1": "Itthaṃ sudaṃ āyasmā madhupiṇḍiko thero imā gāthāyo abhāsitthāti.",
"tha-ap99:13.1": "Madhupiṇḍikattherassāpadānaṃ sattamaṃ."
}