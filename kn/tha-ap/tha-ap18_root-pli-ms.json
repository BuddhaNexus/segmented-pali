{
"tha-ap18:1.1": "Therāpadāna",
"tha-ap18:2.1": "Sīhāsaniyavagga",
"tha-ap18:3.1": "6. Rāhulattheraapadāna",
"tha-ap18:4.1": "“Padumuttarassa bhagavato,",
"tha-ap18:4.2": "Lokajeṭṭhassa tādino;",
"tha-ap18:4.3": "Sattabhūmamhi pāsāde,",
"tha-ap18:4.4": "Ādāsaṃ santhariṃ ahaṃ.",
"tha-ap18:5.1": "Khīṇāsavasahassehi,",
"tha-ap18:5.2": "parikiṇṇo mahāmuni;",
"tha-ap18:5.3": "Upāgami gandhakuṭiṃ,",
"tha-ap18:5.4": "dvipadindo narāsabho.",
"tha-ap18:6.1": "Virocento gandhakuṭiṃ,",
"tha-ap18:6.2": "devadevo narāsabho;",
"tha-ap18:6.3": "Bhikkhusaṃghe ṭhito satthā,",
"tha-ap18:6.4": "imā gāthā abhāsatha.",
"tha-ap18:7.1": "‘Yenāyaṃ jotitā seyyā,",
"tha-ap18:7.2": "ādāsova susanthato;",
"tha-ap18:7.3": "Tamahaṃ kittayissāmi,",
"tha-ap18:7.4": "suṇātha mama bhāsato.",
"tha-ap18:8.1": "Soṇṇamayā rūpimayā,",
"tha-ap18:8.2": "atho veḷuriyāmayā;",
"tha-ap18:8.3": "Nibbattissanti pāsādā,",
"tha-ap18:8.4": "ye keci manaso piyā.",
"tha-ap18:9.1": "Catusaṭṭhikkhattuṃ devindo,",
"tha-ap18:9.2": "devarajjaṃ karissati;",
"tha-ap18:9.3": "Sahassakkhattuṃ cakkavattī,",
"tha-ap18:9.4": "bhavissati anantarā.",
"tha-ap18:10.1": "Ekavīsatikappamhi,",
"tha-ap18:10.2": "vimalo nāma khattiyo;",
"tha-ap18:10.3": "Cāturanto vijitāvī,",
"tha-ap18:10.4": "cakkavattī bhavissati.",
"tha-ap18:11.1": "Nagaraṃ reṇuvatī nāma,",
"tha-ap18:11.2": "iṭṭhakāhi sumāpitaṃ;",
"tha-ap18:11.3": "Āyāmato tīṇi sataṃ,",
"tha-ap18:11.4": "caturassasamāyutaṃ.",
"tha-ap18:12.1": "Sudassano nāma pāsādo,",
"tha-ap18:12.2": "vissakammena māpito;",
"tha-ap18:12.3": "Kūṭāgāravarūpeto,",
"tha-ap18:12.4": "sattaratanabhūsito.",
"tha-ap18:13.1": "Dasasaddāvivittaṃ taṃ,",
"tha-ap18:13.2": "vijjādharasamākulaṃ;",
"tha-ap18:13.3": "Sudassanaṃva nagaraṃ,",
"tha-ap18:13.4": "devatānaṃ bhavissati.",
"tha-ap18:14.1": "Pabhā niggacchate tassa,",
"tha-ap18:14.2": "uggacchanteva sūriye;",
"tha-ap18:14.3": "Virocessati taṃ niccaṃ,",
"tha-ap18:14.4": "samantā aṭṭhayojanaṃ.",
"tha-ap18:15.1": "Kappasatasahassamhi,",
"tha-ap18:15.2": "okkākakulasambhavo;",
"tha-ap18:15.3": "Gotamo nāma gottena,",
"tha-ap18:15.4": "satthā loke bhavissati.",
"tha-ap18:16.1": "Tusitā so cavitvāna,",
"tha-ap18:16.2": "sukkamūlena codito;",
"tha-ap18:16.3": "Gotamassa bhagavato,",
"tha-ap18:16.4": "atrajo so bhavissati.",
"tha-ap18:17.1": "Sacevaseyya agāraṃ,",
"tha-ap18:17.2": "cakkavattī bhaveyya so;",
"tha-ap18:17.3": "Aṭṭhānametaṃ yaṃ tādī,",
"tha-ap18:17.4": "agāre ratimajjhagā.",
"tha-ap18:18.1": "Nikkhamitvā agāramhā,",
"tha-ap18:18.2": "pabbajissati subbato;",
"tha-ap18:18.3": "Rāhulo nāma nāmena,",
"tha-ap18:18.4": "arahā so bhavissati’.",
"tha-ap18:19.1": "Kikīva aṇḍaṃ rakkheyya,",
"tha-ap18:19.2": "cāmarī viya vāladhiṃ;",
"tha-ap18:19.3": "Nipako sīlasampanno,",
"tha-ap18:19.4": "evaṃ rakkhiṃ mahāmuni.",
"tha-ap18:20.1": "Tassāhaṃ dhammamaññāya,",
"tha-ap18:20.2": "vihāsiṃ sāsane rato;",
"tha-ap18:20.3": "Sabbāsave pariññāya,",
"tha-ap18:20.4": "viharāmi anāsavo.",
"tha-ap18:21.1": "Paṭisambhidā catasso,",
"tha-ap18:21.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap18:21.3": "Chaḷabhiññā sacchikatā,",
"tha-ap18:21.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap18:22.1": "Itthaṃ sudaṃ āyasmā rāhulo thero imā gāthāyo abhāsitthāti.",
"tha-ap18:23.1": "Rāhulattherassāpadānaṃ chaṭṭhaṃ."
}