{
"tha-ap486:1.1": "Therāpadāna",
"tha-ap486:2.1": "Paṃsukūlavagga",
"tha-ap486:3.1": "4 Ñāṇathavikattheraapadāna",
"tha-ap486:4.1": "“Dakkhiṇe himavantassa,",
"tha-ap486:4.2": "sukato assamo mama;",
"tha-ap486:4.3": "Uttamatthaṃ gavesanto,",
"tha-ap486:4.4": "vasāmi vipine tadā.",
"tha-ap486:5.1": "Lābhālābhena santuṭṭho,",
"tha-ap486:5.2": "mūlena ca phalena ca;",
"tha-ap486:5.3": "Anvesanto ācariyaṃ,",
"tha-ap486:5.4": "vasāmi ekako ahaṃ.",
"tha-ap486:6.1": "Sumedho nāma sambuddho,",
"tha-ap486:6.2": "loke uppajji tāvade;",
"tha-ap486:6.3": "Catusaccaṃ pakāseti,",
"tha-ap486:6.4": "uddharanto mahājanaṃ.",
"tha-ap486:7.1": "Nāhaṃ suṇomi sambuddhaṃ,",
"tha-ap486:7.2": "napi me koci saṃsati;",
"tha-ap486:7.3": "Aṭṭhavasse atikkante,",
"tha-ap486:7.4": "assosiṃ lokanāyakaṃ.",
"tha-ap486:8.1": "Aggidāruṃ nīharitvā,",
"tha-ap486:8.2": "sammajjitvāna assamaṃ;",
"tha-ap486:8.3": "Khāribhāraṃ gahetvāna,",
"tha-ap486:8.4": "nikkhamiṃ vipinā ahaṃ.",
"tha-ap486:9.1": "Ekarattiṃ vasantohaṃ,",
"tha-ap486:9.2": "gāmesu nigamesu ca;",
"tha-ap486:9.3": "Anupubbena candavatiṃ,",
"tha-ap486:9.4": "tadāhaṃ upasaṅkamiṃ.",
"tha-ap486:10.1": "Bhagavā tamhi samaye,",
"tha-ap486:10.2": "sumedho lokanāyako;",
"tha-ap486:10.3": "Uddharanto bahū satte,",
"tha-ap486:10.4": "deseti amataṃ padaṃ.",
"tha-ap486:11.1": "Janakāyamatikkamma,",
"tha-ap486:11.2": "vanditvā jinasāgaraṃ;",
"tha-ap486:11.3": "Ekaṃsaṃ ajinaṃ katvā,",
"tha-ap486:11.4": "santhaviṃ lokanāyakaṃ.",
"tha-ap486:12.1": "‘Tuvaṃ satthā ca ketu ca,",
"tha-ap486:12.2": "dhajo yūpo ca pāṇinaṃ;",
"tha-ap486:12.3": "Parāyaṇo patiṭṭhā ca,",
"tha-ap486:12.4": "dīpo ca dvipaduttamo.",
"tha-ap486:13.1": "Ekavīsatimaṃ bhāṇavāraṃ.",
"tha-ap486:14.1": "Nepuñño dassane vīro,",
"tha-ap486:14.2": "tāresi janataṃ tuvaṃ;",
"tha-ap486:14.3": "Natthañño tārako loke,",
"tha-ap486:14.4": "tavuttaritaro mune.",
"tha-ap486:15.1": "Sakkā theve kusaggena,",
"tha-ap486:15.2": "pametuṃ sāgaruttame;",
"tha-ap486:15.3": "Na tveva tava sabbaññu,",
"tha-ap486:15.4": "ñāṇaṃ sakkā pametave.",
"tha-ap486:16.1": "Tuladaṇḍe ṭhapetvāna,",
"tha-ap486:16.2": "mahiṃ sakkā dharetave;",
"tha-ap486:16.3": "Na tveva tava paññāya,",
"tha-ap486:16.4": "pamāṇamatthi cakkhuma.",
"tha-ap486:17.1": "Ākāso minituṃ sakkā,",
"tha-ap486:17.2": "rajjuyā aṅgulena vā;",
"tha-ap486:17.3": "Na tveva tava sabbaññu,",
"tha-ap486:17.4": "sīlaṃ sakkā pametave.",
"tha-ap486:18.1": "Mahāsamudde udakaṃ,",
"tha-ap486:18.2": "ākāso ca vasundharā;",
"tha-ap486:18.3": "Parimeyyāni etāni,",
"tha-ap486:18.4": "appameyyosi cakkhuma’.",
"tha-ap486:19.1": "Chahi gāthāhi sabbaññuṃ,",
"tha-ap486:19.2": "kittayitvā mahāyasaṃ;",
"tha-ap486:19.3": "Añjaliṃ paggahetvāna,",
"tha-ap486:19.4": "tuṇhī aṭṭhāsahaṃ tadā.",
"tha-ap486:20.1": "Yaṃ vadanti sumedhoti,",
"tha-ap486:20.2": "bhūripaññaṃ sumedhasaṃ;",
"tha-ap486:20.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap486:20.4": "imā gāthā abhāsatha.",
"tha-ap486:21.1": "‘Yo me ñāṇaṃ pakittesi,",
"tha-ap486:21.2": "vippasannena cetasā;",
"tha-ap486:21.3": "Tamahaṃ kittayissāmi,",
"tha-ap486:21.4": "suṇātha mama bhāsato.",
"tha-ap486:22.1": "Sattasattati kappāni,",
"tha-ap486:22.2": "devaloke ramissati;",
"tha-ap486:22.3": "Sahassakkhattuṃ devindo,",
"tha-ap486:22.4": "devarajjaṃ karissati.",
"tha-ap486:23.1": "Anekasatakkhattuñca,",
"tha-ap486:23.2": "cakkavattī bhavissati;",
"tha-ap486:23.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap486:23.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap486:24.1": "Devabhūto manusso vā,",
"tha-ap486:24.2": "puññakammasamāhito;",
"tha-ap486:24.3": "Anūnamanasaṅkappo,",
"tha-ap486:24.4": "tikkhapañño bhavissati’.",
"tha-ap486:25.1": "Tiṃsakappasahassamhi,",
"tha-ap486:25.2": "okkākakulasambhavo;",
"tha-ap486:25.3": "Gotamo nāma gottena,",
"tha-ap486:25.4": "satthā loke bhavissati.",
"tha-ap486:26.1": "Agārā abhinikkhamma,",
"tha-ap486:26.2": "pabbajissatikiñcano;",
"tha-ap486:26.3": "Jātiyā sattavassena,",
"tha-ap486:26.4": "arahattaṃ phusissati.",
"tha-ap486:27.1": "Yato sarāmi attānaṃ,",
"tha-ap486:27.2": "yato pattosmi sāsanaṃ;",
"tha-ap486:27.3": "Etthantare na jānāmi,",
"tha-ap486:27.4": "cetanaṃ amanoramaṃ.",
"tha-ap486:28.1": "Saṃsaritvā bhave sabbe,",
"tha-ap486:28.2": "sampattānubhaviṃ ahaṃ;",
"tha-ap486:28.3": "Bhoge me ūnatā natthi,",
"tha-ap486:28.4": "phalaṃ ñāṇassa thomane.",
"tha-ap486:29.1": "Tiyaggī nibbutā mayhaṃ,",
"tha-ap486:29.2": "bhavā sabbe samūhatā;",
"tha-ap486:29.3": "Sabbāsavā parikkhīṇā,",
"tha-ap486:29.4": "natthi dāni punabbhavo.",
"tha-ap486:30.1": "Tiṃsakappasahassamhi,",
"tha-ap486:30.2": "yaṃ ñāṇamathaviṃ ahaṃ;",
"tha-ap486:30.3": "Duggatiṃ nābhijānāmi,",
"tha-ap486:30.4": "phalaṃ ñāṇassa thomane.",
"tha-ap486:31.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap486:31.4": "viharāmi anāsavo.",
"tha-ap486:32.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap486:32.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap486:33.1": "Paṭisambhidā catasso, … pe …",
"tha-ap486:33.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap486:34.1": "Itthaṃ sudaṃ āyasmā ñāṇathaviko thero imā gāthāyo abhāsitthāti.",
"tha-ap486:35.1": "Ñāṇathavikattherassāpadānaṃ catutthaṃ."
}