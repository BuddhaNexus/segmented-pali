{
"tha-ap158:1.1": "Therāpadāna",
"tha-ap158:2.1": "Bandhujīvakavagga",
"tha-ap158:3.1": "6. Kadambapupphiyattheraapadāna",
"tha-ap158:4.1": "“Himavantassāvidūre,",
"tha-ap158:4.2": "kukkuṭo nāma pabbato;",
"tha-ap158:4.3": "Tamhi pabbatapādamhi,",
"tha-ap158:4.4": "satta buddhā vasanti te.",
"tha-ap158:5.1": "Kadambaṃ pupphitaṃ disvā,",
"tha-ap158:5.2": "dīparājaṃva uggataṃ;",
"tha-ap158:5.3": "Ubho hatthehi paggayha,",
"tha-ap158:5.4": "satta buddhe samokiriṃ.",
"tha-ap158:6.1": "Catunnavutito kappe,",
"tha-ap158:6.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap158:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap158:6.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap158:7.1": "Dvenavute ito kappe,",
"tha-ap158:7.2": "sattāsuṃ pupphanāmakā;",
"tha-ap158:7.3": "Sattaratanasampannā,",
"tha-ap158:7.4": "cakkavattī mahabbalā.",
"tha-ap158:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap158:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap158:9.1": "Itthaṃ sudaṃ āyasmā kadambapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap158:10.1": "Kadambapupphiyattherassāpadānaṃ chaṭṭhaṃ."
}