{
"tha-ap144:1.1": "Therāpadāna",
"tha-ap144:2.1": "Chattavagga",
"tha-ap144:3.1": "2. Thambhāropakattheraapadāna",
"tha-ap144:4.1": "“Nibbute lokanāthamhi,",
"tha-ap144:4.2": "dhammadassīnarāsabhe;",
"tha-ap144:4.3": "Āropesiṃ dhajatthambhaṃ,",
"tha-ap144:4.4": "buddhaseṭṭhassa cetiye.",
"tha-ap144:5.1": "Nisseṇiṃ māpayitvāna,",
"tha-ap144:5.2": "thūpaseṭṭhaṃ samāruhiṃ;",
"tha-ap144:5.3": "Jātipupphaṃ gahetvāna,",
"tha-ap144:5.4": "thūpamhi abhiropayiṃ.",
"tha-ap144:6.1": "Aho buddhā aho dhammā,",
"tha-ap144:6.2": "aho no satthu sampadā;",
"tha-ap144:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap144:6.4": "thūpapūjāyidaṃ phalaṃ.",
"tha-ap144:7.1": "Catunnavutito kappe,",
"tha-ap144:7.2": "thūpasīkhasanāmakā;",
"tha-ap144:7.3": "Soḷasāsiṃsu rājāno,",
"tha-ap144:7.4": "cakkavattī mahabbalā.",
"tha-ap144:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap144:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap144:9.1": "Itthaṃ sudaṃ āyasmā thambhāropako thero imā gāthāyo abhāsitthāti.",
"tha-ap144:10.1": "Thambhāropakattherassāpadānaṃ dutiyaṃ."
}