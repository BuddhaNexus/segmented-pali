{
"tha-ap34:1.1": "Therāpadāna",
"tha-ap34:2.1": "Kuṇḍadhānavagga",
"tha-ap34:3.1": "2. Sāgatattheraapadāna",
"tha-ap34:4.1": "“Sobhito nāma nāmena,",
"tha-ap34:4.2": "ahosiṃ brāhmaṇo tadā;",
"tha-ap34:4.3": "Purakkhato sasissehi,",
"tha-ap34:4.4": "ārāmaṃ agamāsahaṃ.",
"tha-ap34:5.1": "Bhagavā tamhi samaye,",
"tha-ap34:5.2": "bhikkhusaṃghapurakkhato;",
"tha-ap34:5.3": "Ārāmadvārā nikkhamma,",
"tha-ap34:5.4": "aṭṭhāsi purisuttamo.",
"tha-ap34:6.1": "Tamaddasāsiṃ sambuddhaṃ,",
"tha-ap34:6.2": "dantaṃ dantapurakkhataṃ;",
"tha-ap34:6.3": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap34:6.4": "santhaviṃ lokanāyakaṃ.",
"tha-ap34:7.1": "Ye keci pādapā sabbe,",
"tha-ap34:7.2": "mahiyā te virūhare;",
"tha-ap34:7.3": "Buddhimanto tathā sattā,",
"tha-ap34:7.4": "ruhanti jinasāsane.",
"tha-ap34:8.1": "Satthavāhosi sappañño,",
"tha-ap34:8.2": "mahesi bahuke jane;",
"tha-ap34:8.3": "Vipathā uddharitvāna,",
"tha-ap34:8.4": "pathaṃ ācikkhase tuvaṃ.",
"tha-ap34:9.1": "Danto dantaparikiṇṇo,",
"tha-ap34:9.2": "jhāyī jhānaratehi ca;",
"tha-ap34:9.3": "Ātāpī pahitattehi,",
"tha-ap34:9.4": "upasantehi tādibhi.",
"tha-ap34:10.1": "Alaṅkato parisāhi,",
"tha-ap34:10.2": "puññañāṇehi sobhati;",
"tha-ap34:10.3": "Pabhā niddhāvate tuyhaṃ,",
"tha-ap34:10.4": "sūriyodayane yathā.",
"tha-ap34:11.1": "Pasannacittaṃ disvāna,",
"tha-ap34:11.2": "mahesī padumuttaro;",
"tha-ap34:11.3": "Bhikkhusaṃghe ṭhito satthā,",
"tha-ap34:11.4": "imā gāthā abhāsatha.",
"tha-ap34:12.1": "‘Yo so hāsaṃ janetvāna,",
"tha-ap34:12.2": "mamaṃ kittesi brāhmaṇo;",
"tha-ap34:12.3": "Kappānaṃ satasahassaṃ,",
"tha-ap34:12.4": "devaloke ramissati.",
"tha-ap34:13.1": "Tusitā hi cavitvāna,",
"tha-ap34:13.2": "sukkamūlena codito;",
"tha-ap34:13.3": "Gotamassa bhagavato,",
"tha-ap34:13.4": "sāsane pabbajissati.",
"tha-ap34:14.1": "Tena kammena sukatena,",
"tha-ap34:14.2": "arahattaṃ labhissati;",
"tha-ap34:14.3": "Sāgato nāma nāmena,",
"tha-ap34:14.4": "hessati satthu sāvako’.",
"tha-ap34:15.1": "Pabbajitvāna kāyena,",
"tha-ap34:15.2": "pāpakammaṃ vivajjayiṃ;",
"tha-ap34:15.3": "Vacīduccaritaṃ hitvā,",
"tha-ap34:15.4": "ājīvaṃ parisodhayiṃ.",
"tha-ap34:16.1": "Evaṃ viharamānohaṃ,",
"tha-ap34:16.2": "tejodhātūsu kovido;",
"tha-ap34:16.3": "Sabbāsave pariññāya,",
"tha-ap34:16.4": "viharāmi anāsavo.",
"tha-ap34:17.1": "Paṭisambhidā catasso, … pe …",
"tha-ap34:17.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap34:18.1": "Itthaṃ sudaṃ āyasmā sāgato thero imā gāthāyo abhāsitthāti.",
"tha-ap34:19.1": "Sāgatattherassāpadānaṃ dutiyaṃ."
}