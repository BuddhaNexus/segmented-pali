{
"tha-ap124:1.1": "Therāpadāna",
"tha-ap124:2.1": "Sereyyavagga",
"tha-ap124:3.1": "2. Pupphathūpiyattheraapadāna",
"tha-ap124:4.1": "“Himavantassāvidūre,",
"tha-ap124:4.2": "kukkuro nāma pabbato;",
"tha-ap124:4.3": "Vemajjhe tassa vasati,",
"tha-ap124:4.4": "brāhmaṇo mantapāragū.",
"tha-ap124:5.1": "Pañca sissasahassāni,",
"tha-ap124:5.2": "parivārenti maṃ sadā;",
"tha-ap124:5.3": "Pubbuṭṭhāyī ca te āsuṃ,",
"tha-ap124:5.4": "mantesu ca visāradā.",
"tha-ap124:6.1": "Buddho loke samuppanno,",
"tha-ap124:6.2": "taṃ vijānātha no bhavaṃ;",
"tha-ap124:6.3": "Asītibyañjanānassa,",
"tha-ap124:6.4": "bāttiṃsavaralakkhaṇā.",
"tha-ap124:7.1": "Byāmappabho jinavaro,",
"tha-ap124:7.2": "ādiccova virocati;",
"tha-ap124:7.3": "Sissānaṃ vacanaṃ sutvā,",
"tha-ap124:7.4": "brāhmaṇo mantapāragū.",
"tha-ap124:8.1": "Assamā abhinikkhamma,",
"tha-ap124:8.2": "disaṃ pucchati sissake;",
"tha-ap124:8.3": "Yamhi dese mahāvīro,",
"tha-ap124:8.4": "vasati lokanāyako.",
"tha-ap124:9.1": "Tāhaṃ disaṃ namassissaṃ,",
"tha-ap124:9.2": "jinaṃ appaṭipuggalaṃ;",
"tha-ap124:9.3": "Udaggacitto sumano,",
"tha-ap124:9.4": "pūjesiṃ taṃ tathāgataṃ.",
"tha-ap124:10.1": "Etha sissā gamissāma,",
"tha-ap124:10.2": "dakkhissāma tathāgataṃ;",
"tha-ap124:10.3": "Vanditvā satthuno pāde,",
"tha-ap124:10.4": "sossāma jinasāsanaṃ.",
"tha-ap124:11.1": "Ekāhaṃ abhinikkhamma,",
"tha-ap124:11.2": "byādhiṃ paṭilabhiṃ ahaṃ;",
"tha-ap124:11.3": "Byādhinā pīḷito santo,",
"tha-ap124:11.4": "sālaṃ vāsayituṃ gamiṃ.",
"tha-ap124:12.1": "Sabbe sisse samānetvā,",
"tha-ap124:12.2": "apucchiṃ te tathāgataṃ;",
"tha-ap124:12.3": "Kīdisaṃ lokanāthassa,",
"tha-ap124:12.4": "guṇaṃ paramabuddhino.",
"tha-ap124:13.1": "Te me puṭṭhā viyākaṃsu,",
"tha-ap124:13.2": "Yathā dassāvino tathā;",
"tha-ap124:13.3": "Sakkaccaṃ buddhaseṭṭhaṃ taṃ,",
"tha-ap124:13.4": "Desesuṃ mama sammukhā.",
"tha-ap124:14.1": "Tesāhaṃ vacanaṃ sutvā,",
"tha-ap124:14.2": "sakaṃ cittaṃ pasādayiṃ;",
"tha-ap124:14.3": "Pupphehi thūpaṃ katvāna,",
"tha-ap124:14.4": "tattha kālaṅkato ahaṃ.",
"tha-ap124:15.1": "Te me sarīraṃ jhāpetvā,",
"tha-ap124:15.2": "agamuṃ buddhasantikaṃ;",
"tha-ap124:15.3": "Añjaliṃ paggahetvāna,",
"tha-ap124:15.4": "satthāramabhivādayuṃ.",
"tha-ap124:16.1": "Pupphehi thūpaṃ katvāna,",
"tha-ap124:16.2": "sugatassa mahesino;",
"tha-ap124:16.3": "Kappānaṃ satasahassaṃ,",
"tha-ap124:16.4": "duggatiṃ nupapajjahaṃ.",
"tha-ap124:17.1": "Cattālīsasahassamhi,",
"tha-ap124:17.2": "kappe soḷasa khattiyā;",
"tha-ap124:17.3": "Nāmenaggisamā nāma,",
"tha-ap124:17.4": "cakkavattī mahabbalā.",
"tha-ap124:18.1": "Vīsakappasahassamhi,",
"tha-ap124:18.2": "rājāno cakkavattino;",
"tha-ap124:18.3": "Ghatāsanasanāmāva,",
"tha-ap124:18.4": "aṭṭhattiṃsa mahīpatī.",
"tha-ap124:19.1": "Paṭisambhidā catasso, … pe …",
"tha-ap124:19.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap124:20.1": "Itthaṃ sudaṃ āyasmā pupphathūpiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap124:21.1": "Pupphathūpiyattherassāpadānaṃ dutiyaṃ."
}