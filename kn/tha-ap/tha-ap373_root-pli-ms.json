{
"tha-ap373:1.1": "Therāpadāna",
"tha-ap373:2.1": "Bodhivandanavagga",
"tha-ap373:3.1": "1. Bodhivandakattheraapadāna",
"tha-ap373:4.1": "“Pāṭaliṃ haritaṃ disvā,",
"tha-ap373:4.2": "pādapaṃ dharaṇīruhaṃ;",
"tha-ap373:4.3": "Ekaṃsaṃ añjaliṃ katvā,",
"tha-ap373:4.4": "avandiṃ pāṭaliṃ ahaṃ.",
"tha-ap373:5.1": "Añjaliṃ paggahetvāna,",
"tha-ap373:5.2": "garuṃ katvāna mānasaṃ;",
"tha-ap373:5.3": "Antosuddhaṃ bahisuddhaṃ,",
"tha-ap373:5.4": "suvimuttamanāsavaṃ.",
"tha-ap373:6.1": "Vipassiṃ lokamahitaṃ,",
"tha-ap373:6.2": "karuṇāñāṇasāgaraṃ;",
"tha-ap373:6.3": "Sammukhā viya sambuddhaṃ,",
"tha-ap373:6.4": "avandiṃ pāṭaliṃ ahaṃ.",
"tha-ap373:7.1": "Ekanavutito kappe,",
"tha-ap373:7.2": "yaṃ bodhimabhivandahaṃ;",
"tha-ap373:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap373:7.4": "vandanāya idaṃ phalaṃ.",
"tha-ap373:8.1": "Paṭisambhidā catasso,",
"tha-ap373:8.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap373:8.3": "Chaḷabhiññā sacchikatā,",
"tha-ap373:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap373:9.1": "Itthaṃ sudaṃ āyasmā bodhivandako thero imā gāthāyo abhāsitthāti.",
"tha-ap373:10.1": "Bodhivandakattherassāpadānaṃ paṭhamaṃ."
}