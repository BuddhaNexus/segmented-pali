{
"tha-ap68:1.1": "Therāpadāna",
"tha-ap68:2.1": "Sakacintaniyavagga",
"tha-ap68:3.1": "6. Sucintitattheraapadāna",
"tha-ap68:4.1": "“Giriduggacaro āsiṃ,",
"tha-ap68:4.2": "abhijātova kesarī;",
"tha-ap68:4.3": "Migasaṅghaṃ vadhitvāna,",
"tha-ap68:4.4": "jīvāmi pabbatantare.",
"tha-ap68:5.1": "Atthadassī tu bhagavā,",
"tha-ap68:5.2": "sabbaññū vadataṃ varo;",
"tha-ap68:5.3": "Mamuddharitukāmo so,",
"tha-ap68:5.4": "āgacchi pabbatuttamaṃ.",
"tha-ap68:6.1": "Pasadañca migaṃ hantvā,",
"tha-ap68:6.2": "bhakkhituṃ samupāgamiṃ;",
"tha-ap68:6.3": "Bhagavā tamhi samaye,",
"tha-ap68:6.4": "bhikkhamāno upāgami.",
"tha-ap68:7.1": "Varamaṃsāni paggayha,",
"tha-ap68:7.2": "adāsiṃ tassa satthuno;",
"tha-ap68:7.3": "Anumodi mahāvīro,",
"tha-ap68:7.4": "nibbāpento mamaṃ tadā.",
"tha-ap68:8.1": "Tena cittappasādena,",
"tha-ap68:8.2": "giriduggaṃ pavisiṃ ahaṃ;",
"tha-ap68:8.3": "Pītiṃ uppādayitvāna,",
"tha-ap68:8.4": "tattha kālaṅkato ahaṃ.",
"tha-ap68:9.1": "Etena maṃsadānena,",
"tha-ap68:9.2": "cittassa paṇidhīhi ca;",
"tha-ap68:9.3": "Pannarase kappasate,",
"tha-ap68:9.4": "devaloke ramiṃ ahaṃ.",
"tha-ap68:10.1": "Avasesesu kappesu,",
"tha-ap68:10.2": "kusalaṃ cintitaṃ mayā;",
"tha-ap68:10.3": "Teneva maṃsadānena,",
"tha-ap68:10.4": "buddhānussaraṇena ca.",
"tha-ap68:11.1": "Aṭṭhattiṃsamhi kappamhi,",
"tha-ap68:11.2": "aṭṭha dīghāyunāmakā;",
"tha-ap68:11.3": "Saṭṭhimhito kappasate,",
"tha-ap68:11.4": "duve varuṇanāmakā.",
"tha-ap68:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap68:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap68:13.1": "Itthaṃ sudaṃ āyasmā sucintito thero imā gāthāyo abhāsitthāti.",
"tha-ap68:14.1": "Sucintitattherassāpadānaṃ chaṭṭhaṃ."
}