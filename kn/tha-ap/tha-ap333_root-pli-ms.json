{
"tha-ap333:1.1": "Therāpadāna",
"tha-ap333:2.1": "Gandhodakavagga",
"tha-ap333:3.1": "1. Gandhadhūpiyattheraapadāna",
"tha-ap333:4.1": "“Siddhatthassa bhagavato,",
"tha-ap333:4.2": "gandhadhūpaṃ adāsahaṃ;",
"tha-ap333:4.3": "Sumanehi paṭicchannaṃ,",
"tha-ap333:4.4": "buddhānucchavikañca taṃ.",
"tha-ap333:5.1": "Kañcanagghiyasaṅkāsaṃ,",
"tha-ap333:5.2": "buddhaṃ lokagganāyakaṃ;",
"tha-ap333:5.3": "Indīvaraṃva jalitaṃ,",
"tha-ap333:5.4": "ādittaṃva hutāsanaṃ.",
"tha-ap333:6.1": "Byagghusabhaṃva pavaraṃ,",
"tha-ap333:6.2": "abhijātaṃva kesariṃ;",
"tha-ap333:6.3": "Nisinnaṃ samaṇānaggaṃ,",
"tha-ap333:6.4": "bhikkhusaṃghapurakkhataṃ.",
"tha-ap333:7.1": "Disvā cittaṃ pasādetvā,",
"tha-ap333:7.2": "paggahetvāna añjaliṃ;",
"tha-ap333:7.3": "Vanditvā satthuno pāde,",
"tha-ap333:7.4": "pakkāmiṃ uttarāmukho.",
"tha-ap333:8.1": "Catunnavutito kappe,",
"tha-ap333:8.2": "yaṃ gandhamadadiṃ tadā;",
"tha-ap333:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap333:8.4": "gandhapūjāyidaṃ phalaṃ.",
"tha-ap333:9.1": "Paṭisambhidā catasso,",
"tha-ap333:9.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap333:9.3": "Chaḷabhiññā sacchikatā,",
"tha-ap333:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap333:10.1": "Itthaṃ sudaṃ āyasmā gandhadhūpiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap333:11.1": "Gandhadhūpiyattherassāpadānaṃ paṭhamaṃ."
}