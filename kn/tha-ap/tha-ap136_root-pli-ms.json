{
"tha-ap136:1.1": "Therāpadāna",
"tha-ap136:2.1": "Sobhitavagga",
"tha-ap136:3.1": "4 Pupphacchadaniyattheraapadāna",
"tha-ap136:4.1": "“Sunando nāma nāmena,",
"tha-ap136:4.2": "brāhmaṇo mantapāragū;",
"tha-ap136:4.3": "Ajjhāyako yācayogo,",
"tha-ap136:4.4": "vājapeyyaṃ ayājayi.",
"tha-ap136:5.1": "Padumuttaro lokavidū,",
"tha-ap136:5.2": "aggo kāruṇiko isi;",
"tha-ap136:5.3": "Janataṃ anukampanto,",
"tha-ap136:5.4": "ambare caṅkamī tadā.",
"tha-ap136:6.1": "Caṅkamitvāna sambuddho,",
"tha-ap136:6.2": "sabbaññū lokanāyako;",
"tha-ap136:6.3": "Mettāya aphari satte,",
"tha-ap136:6.4": "appamāṇe nirūpadhi.",
"tha-ap136:7.1": "Vaṇṭe chetvāna pupphāni,",
"tha-ap136:7.2": "brāhmaṇo mantapāragū;",
"tha-ap136:7.3": "Sabbe sisse samānetvā,",
"tha-ap136:7.4": "ākāse ukkhipāpayi.",
"tha-ap136:8.1": "Yāvatā nagaraṃ āsi,",
"tha-ap136:8.2": "pupphānaṃ chadanaṃ tadā;",
"tha-ap136:8.3": "Buddhassa ānubhāvena,",
"tha-ap136:8.4": "sattāhaṃ na vigacchatha.",
"tha-ap136:9.1": "Teneva sukkamūlena,",
"tha-ap136:9.2": "anubhotvāna sampadā;",
"tha-ap136:9.3": "Sabbāsave pariññāya,",
"tha-ap136:9.4": "tiṇṇo loke visattikaṃ.",
"tha-ap136:10.1": "Ekārase kappasate,",
"tha-ap136:10.2": "pañcatiṃsāsu khattiyā;",
"tha-ap136:10.3": "Ambaraṃsasanāmā te,",
"tha-ap136:10.4": "cakkavattī mahabbalā.",
"tha-ap136:11.1": "Paṭisambhidā catasso, … pe …",
"tha-ap136:11.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap136:12.1": "Itthaṃ sudaṃ āyasmā pupphacchadaniyo thero imā gāthāyo abhāsitthāti.",
"tha-ap136:13.1": "Pupphacchadaniyattherassāpadānaṃ catutthaṃ."
}