{
"tha-ap184:1.1": "Therāpadāna",
"tha-ap184:2.1": "Kuṭajapupphiyavagga",
"tha-ap184:3.1": "2. Bandhujīvakattheraapadāna",
"tha-ap184:4.1": "“Siddhattho nāma sambuddho,",
"tha-ap184:4.2": "sayambhū sabbhi vaṇṇito;",
"tha-ap184:4.3": "Samādhiṃ so samāpanno,",
"tha-ap184:4.4": "nisīdi pabbatantare.",
"tha-ap184:5.1": "Jātassare gavesanto,",
"tha-ap184:5.2": "dakajaṃ pupphamuttamaṃ;",
"tha-ap184:5.3": "Bandhujīvakapupphāni,",
"tha-ap184:5.4": "addasaṃ samanantaraṃ.",
"tha-ap184:6.1": "Ubho hatthehi paggayha,",
"tha-ap184:6.2": "upāgacchiṃ mahāmuniṃ;",
"tha-ap184:6.3": "Pasannacitto sumano,",
"tha-ap184:6.4": "siddhatthassābhiropayiṃ.",
"tha-ap184:7.1": "Catunnavutito kappe,",
"tha-ap184:7.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap184:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap184:7.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap184:8.1": "Ito cātuddase kappe,",
"tha-ap184:8.2": "eko āsiṃ janādhipo;",
"tha-ap184:8.3": "Samuddakappo nāmena,",
"tha-ap184:8.4": "cakkavattī mahabbalo.",
"tha-ap184:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap184:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap184:10.1": "Itthaṃ sudaṃ āyasmā bandhujīvako thero imā gāthāyo abhāsitthāti.",
"tha-ap184:11.1": "Bandhujīvakattherassāpadānaṃ dutiyaṃ."
}