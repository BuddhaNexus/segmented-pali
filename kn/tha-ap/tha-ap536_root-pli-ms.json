{
"tha-ap536:1.1": "Therāpadāna",
"tha-ap536:2.1": "Kaccāyanavagga",
"tha-ap536:3.1": "4. Dabbamallaputtattheraapadāna",
"tha-ap536:4.1": "“Padumuttaro nāma jino,",
"tha-ap536:4.2": "sabbalokavidū muni;",
"tha-ap536:4.3": "Ito satasahassamhi,",
"tha-ap536:4.4": "kappe uppajji cakkhumā.",
"tha-ap536:5.1": "Ovādako viññāpako,",
"tha-ap536:5.2": "tārako sabbapāṇinaṃ;",
"tha-ap536:5.3": "Desanākusalo buddho,",
"tha-ap536:5.4": "tāresi janataṃ bahuṃ.",
"tha-ap536:6.1": "Anukampako kāruṇiko,",
"tha-ap536:6.2": "hitesī sabbapāṇinaṃ;",
"tha-ap536:6.3": "Sampatte titthiye sabbe,",
"tha-ap536:6.4": "pañcasīle patiṭṭhapi.",
"tha-ap536:7.1": "Evaṃ nirākulaṃ āsi,",
"tha-ap536:7.2": "suññataṃ titthiyehi ca;",
"tha-ap536:7.3": "Vicittaṃ arahantehi,",
"tha-ap536:7.4": "vasībhūtehi tādibhi.",
"tha-ap536:8.1": "Ratanānaṭṭhapaññāsaṃ,",
"tha-ap536:8.2": "uggato so mahāmuni;",
"tha-ap536:8.3": "Kañcanagghiyasaṅkāso,",
"tha-ap536:8.4": "bāttiṃsavaralakkhaṇo.",
"tha-ap536:9.1": "Vassasatasahassāni,",
"tha-ap536:9.2": "āyu vijjati tāvade;",
"tha-ap536:9.3": "Tāvatā tiṭṭhamāno so,",
"tha-ap536:9.4": "tāresi janataṃ bahuṃ.",
"tha-ap536:10.1": "Tadāhaṃ haṃsavatiyaṃ,",
"tha-ap536:10.2": "seṭṭhiputto mahāyaso;",
"tha-ap536:10.3": "Upetvā lokapajjotaṃ,",
"tha-ap536:10.4": "assosiṃ dhammadesanaṃ.",
"tha-ap536:11.1": "Senāsanāni bhikkhūnaṃ,",
"tha-ap536:11.2": "paññāpentaṃ sasāvakaṃ;",
"tha-ap536:11.3": "Kittayantassa vacanaṃ,",
"tha-ap536:11.4": "suṇitvā mudito ahaṃ.",
"tha-ap536:12.1": "Adhikāraṃ sasaṃghassa,",
"tha-ap536:12.2": "katvā tassa mahesino;",
"tha-ap536:12.3": "Nipacca sirasā pāde,",
"tha-ap536:12.4": "taṃ ṭhānamabhipatthayiṃ.",
"tha-ap536:13.1": "Tadāha sa mahāvīro,",
"tha-ap536:13.2": "mama kammaṃ pakittayaṃ;",
"tha-ap536:13.3": "‘Yo sasaṃghamabhojesi,",
"tha-ap536:13.4": "sattāhaṃ lokanāyakaṃ.",
"tha-ap536:14.1": "Soyaṃ kamalapattakkho,",
"tha-ap536:14.2": "sīhaṃso kanakattaco;",
"tha-ap536:14.3": "Mama pādamūle nipati,",
"tha-ap536:14.4": "patthayaṃ ṭhānamuttamaṃ.",
"tha-ap536:15.1": "Satasahassito kappe,",
"tha-ap536:15.2": "okkākakulasambhavo;",
"tha-ap536:15.3": "Gotamo nāma gottena,",
"tha-ap536:15.4": "satthā loke bhavissati.",
"tha-ap536:16.1": "Sāvako tassa buddhassa,",
"tha-ap536:16.2": "dabbo nāmena vissuto;",
"tha-ap536:16.3": "Senāsanapaññāpako,",
"tha-ap536:16.4": "aggo hessatiyaṃ tadā’.",
"tha-ap536:17.1": "Tena kammena sukatena,",
"tha-ap536:17.2": "cetanāpaṇidhīhi ca;",
"tha-ap536:17.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap536:17.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap536:18.1": "Satānaṃ tīṇikkhattuñca,",
"tha-ap536:18.2": "devarajjamakārayiṃ;",
"tha-ap536:18.3": "Satānaṃ pañcakkhattuñca,",
"tha-ap536:18.4": "cakkavattī ahosahaṃ.",
"tha-ap536:19.1": "Padesarajjaṃ vipulaṃ,",
"tha-ap536:19.2": "gaṇanāto asaṅkhiyaṃ;",
"tha-ap536:19.3": "Sabbattha sukhito āsiṃ,",
"tha-ap536:19.4": "tassa kammassa vāhasā.",
"tha-ap536:20.1": "Ekanavutito kappe,",
"tha-ap536:20.2": "vipassī nāma nāyako;",
"tha-ap536:20.3": "Uppajji cārudassano,",
"tha-ap536:20.4": "sabbadhammavipassako.",
"tha-ap536:21.1": "Duṭṭhacitto upavadiṃ,",
"tha-ap536:21.2": "sāvakaṃ tassa tādino;",
"tha-ap536:21.3": "Sabbāsavaparikkhīṇaṃ,",
"tha-ap536:21.4": "suddhoti ca vijāniya.",
"tha-ap536:22.1": "Tasseva naravīrassa,",
"tha-ap536:22.2": "sāvakānaṃ mahesinaṃ;",
"tha-ap536:22.3": "Salākañca gahetvāna,",
"tha-ap536:22.4": "khīrodanamadāsahaṃ.",
"tha-ap536:23.1": "Imamhi bhaddake kappe,",
"tha-ap536:23.2": "brahmabandhu mahāyaso;",
"tha-ap536:23.3": "Kassapo nāma gottena,",
"tha-ap536:23.4": "uppajji vadataṃ varo.",
"tha-ap536:24.1": "Sāsanaṃ jotayitvāna,",
"tha-ap536:24.2": "abhibhuyya kutitthiye;",
"tha-ap536:24.3": "Vineyye vinayitvāva,",
"tha-ap536:24.4": "nibbuto so sasāvako.",
"tha-ap536:25.1": "Sasisse nibbute nāthe,",
"tha-ap536:25.2": "atthamentamhi sāsane;",
"tha-ap536:25.3": "Devā kandiṃsu saṃviggā,",
"tha-ap536:25.4": "muttakesā rudammukhā.",
"tha-ap536:26.1": "‘Nibbāyissati dhammakkho,",
"tha-ap536:26.2": "na passissāma subbate;",
"tha-ap536:26.3": "Na suṇissāma saddhammaṃ,",
"tha-ap536:26.4": "aho no appapuññatā’.",
"tha-ap536:27.1": "Tadāyaṃ pathavī sabbā,",
"tha-ap536:27.2": "acalā sā calācalā;",
"tha-ap536:27.3": "Sāgaro ca sasokova,",
"tha-ap536:27.4": "vinadī karuṇaṃ giraṃ.",
"tha-ap536:28.1": "Catuddisā dundubhiyo,",
"tha-ap536:28.2": "nādayiṃsu amānusā;",
"tha-ap536:28.3": "Samantato asaniyo,",
"tha-ap536:28.4": "phaliṃsu ca bhayāvahā.",
"tha-ap536:29.1": "Ukkā patiṃsu nabhasā,",
"tha-ap536:29.2": "dhūmaketu ca dissati;",
"tha-ap536:29.3": "Sadhūmā jālavaṭṭā ca,",
"tha-ap536:29.4": "raviṃsu karuṇaṃ migā.",
"tha-ap536:30.1": "Uppāde dāruṇe disvā,",
"tha-ap536:30.2": "sāsanatthaṅgasūcake;",
"tha-ap536:30.3": "Saṃviggā bhikkhavo satta,",
"tha-ap536:30.4": "cintayimha mayaṃ tadā.",
"tha-ap536:31.1": "‘Sāsanena vināmhākaṃ,",
"tha-ap536:31.2": "jīvitena alaṃ mayaṃ;",
"tha-ap536:31.3": "Pavisitvā mahāraññaṃ,",
"tha-ap536:31.4": "yuñjāma jinasāsanaṃ’.",
"tha-ap536:32.1": "Addasamha tadāraññe,",
"tha-ap536:32.2": "ubbiddhaṃ selamuttamaṃ;",
"tha-ap536:32.3": "Nisseṇiyā tamāruyha,",
"tha-ap536:32.4": "nisseṇiṃ pātayimhase.",
"tha-ap536:33.1": "Tadā ovadi no thero,",
"tha-ap536:33.2": "‘buddhuppādo sudullabho;",
"tha-ap536:33.3": "Saddhātidullabhā laddhā,",
"tha-ap536:33.4": "thokaṃ sesañca sāsanaṃ.",
"tha-ap536:34.1": "Nipatanti khaṇātītā,",
"tha-ap536:34.2": "anante dukkhasāgare;",
"tha-ap536:34.3": "Tasmā payogo kattabbo,",
"tha-ap536:34.4": "yāva ṭhāti mune mataṃ’.",
"tha-ap536:35.1": "Arahā āsi so thero,",
"tha-ap536:35.2": "anāgāmī tadānugo;",
"tha-ap536:35.3": "Susīlā itare yuttā,",
"tha-ap536:35.4": "devalokaṃ agamhase.",
"tha-ap536:36.1": "Nibbuto tiṇṇasaṃsāro,",
"tha-ap536:36.2": "suddhāvāse ca ekako;",
"tha-ap536:36.3": "Ahañca pakkusāti ca,",
"tha-ap536:36.4": "sabhiyo bāhiyo tathā.",
"tha-ap536:37.1": "Kumārakassapo ceva,",
"tha-ap536:37.2": "tattha tatthūpagā mayaṃ;",
"tha-ap536:37.3": "Saṃsārabandhanā muttā,",
"tha-ap536:37.4": "gotamenānukampitā.",
"tha-ap536:38.1": "Mallesu kusinārāyaṃ,",
"tha-ap536:38.2": "jāto gabbheva me sato;",
"tha-ap536:38.3": "Mātā matā citāruḷhā,",
"tha-ap536:38.4": "tato nippatito ahaṃ.",
"tha-ap536:39.1": "Patito dabbapuñjamhi,",
"tha-ap536:39.2": "tato dabboti vissuto;",
"tha-ap536:39.3": "Brahmacārībalenāhaṃ,",
"tha-ap536:39.4": "vimutto sattavassiko.",
"tha-ap536:40.1": "Khīrodanabalenāhaṃ,",
"tha-ap536:40.2": "pañcahaṅgehupāgato;",
"tha-ap536:40.3": "Khīṇāsavopavādena,",
"tha-ap536:40.4": "pāpehi bahucodito.",
"tha-ap536:41.1": "Ubho puññañca pāpañca,",
"tha-ap536:41.2": "vītivattomhi dānihaṃ;",
"tha-ap536:41.3": "Patvāna paramaṃ santiṃ,",
"tha-ap536:41.4": "viharāmi anāsavo.",
"tha-ap536:42.1": "Senāsanaṃ paññāpayiṃ,",
"tha-ap536:42.2": "hāsayitvāna subbate;",
"tha-ap536:42.3": "Jino tasmiṃ guṇe tuṭṭho,",
"tha-ap536:42.4": "etadagge ṭhapesi maṃ.",
"tha-ap536:43.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap536:43.4": "viharāmi anāsavo.",
"tha-ap536:44.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap536:44.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap536:45.1": "Paṭisambhidā catasso, … pe …",
"tha-ap536:45.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap536:46.1": "Itthaṃ sudaṃ āyasmā dabbamallaputto thero imā gāthāyo abhāsitthāti.",
"tha-ap536:47.1": "Dabbamallaputtattherassāpadānaṃ catutthaṃ."
}