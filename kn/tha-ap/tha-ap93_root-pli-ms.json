{
"tha-ap93:1.1": "Therāpadāna",
"tha-ap93:2.1": "Sudhāvagga",
"tha-ap93:3.1": "1. Sudhāpiṇḍiyattheraapadāna",
"tha-ap93:4.1": "“Pūjārahe pūjayato,",
"tha-ap93:4.2": "buddhe yadi va sāvake;",
"tha-ap93:4.3": "Papañcasamatikkante,",
"tha-ap93:4.4": "tiṇṇasokapariddave.",
"tha-ap93:5.1": "Te tādise pūjayato,",
"tha-ap93:5.2": "nibbute akutobhaye;",
"tha-ap93:5.3": "Na sakkā puññaṃ saṅkhātuṃ,",
"tha-ap93:5.4": "imettamapi kenaci.",
"tha-ap93:6.1": "Catunnamapi dīpānaṃ,",
"tha-ap93:6.2": "issaraṃ yodha kāraye;",
"tha-ap93:6.3": "Ekissā pūjanāyetaṃ,",
"tha-ap93:6.4": "kalaṃ nāgghati soḷasiṃ.",
"tha-ap93:7.1": "Siddhatthassa naraggassa,",
"tha-ap93:7.2": "cetiye phalitantare;",
"tha-ap93:7.3": "Sudhāpiṇḍo mayā dinno,",
"tha-ap93:7.4": "vippasannena cetasā.",
"tha-ap93:8.1": "Catunnavutito kappe,",
"tha-ap93:8.2": "yaṃ kammamakariṃ tadā;",
"tha-ap93:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap93:8.4": "paṭisaṅkhārassidaṃ phalaṃ.",
"tha-ap93:9.1": "Ito tiṃsatikappamhi,",
"tha-ap93:9.2": "paṭisaṅkhārasavhayā;",
"tha-ap93:9.3": "Sattaratanasampannā,",
"tha-ap93:9.4": "terasa cakkavattino.",
"tha-ap93:10.1": "Paṭisambhidā catasso,",
"tha-ap93:10.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap93:10.3": "Chaḷabhiññā sacchikatā,",
"tha-ap93:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap93:11.1": "Itthaṃ sudaṃ āyasmā sudhāpiṇḍiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap93:12.1": "Sudhāpiṇḍiyattherassāpadānaṃ paṭhamaṃ."
}