{
"tha-ap142:1.1": "Therāpadāna",
"tha-ap142:2.1": "Sobhitavagga",
"tha-ap142:3.1": "10 Piyālaphaladāyakattheraapadāna",
"tha-ap142:4.1": "“Pārāvato tadā āsiṃ,",
"tha-ap142:4.2": "paraṃ anuparodhako;",
"tha-ap142:4.3": "Pabbhāre seyyaṃ kappemi,",
"tha-ap142:4.4": "avidūre sikhisatthuno.",
"tha-ap142:5.1": "Sāyaṃ pātañca passāmi,",
"tha-ap142:5.2": "buddhaṃ lokagganāyakaṃ;",
"tha-ap142:5.3": "Deyyadhammo ca me natthi,",
"tha-ap142:5.4": "dvipadindassa tādino.",
"tha-ap142:6.1": "Piyālaphalamādāya,",
"tha-ap142:6.2": "agamaṃ buddhasantikaṃ;",
"tha-ap142:6.3": "Paṭiggahesi bhagavā,",
"tha-ap142:6.4": "lokajeṭṭho narāsabho.",
"tha-ap142:7.1": "Tato paraṃ upādāya,",
"tha-ap142:7.2": "paricāriṃ vināyakaṃ;",
"tha-ap142:7.3": "Tena cittappasādena,",
"tha-ap142:7.4": "tattha kālaṅkato ahaṃ.",
"tha-ap142:8.1": "Ekattiṃse ito kappe,",
"tha-ap142:8.2": "yaṃ phalaṃ adadiṃ ahaṃ;",
"tha-ap142:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap142:8.4": "phaladānassidaṃ phalaṃ.",
"tha-ap142:9.1": "Ito pannarase kappe,",
"tha-ap142:9.2": "tayo āsuṃ piyālino;",
"tha-ap142:9.3": "Sattaratanasampannā,",
"tha-ap142:9.4": "cakkavattī mahabbalā.",
"tha-ap142:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap142:10.4": "kataṃ buddhassa sāsanaṃ”. #1935",
"tha-ap142:11.1": "Itthaṃ sudaṃ āyasmā piyālaphaladāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap142:12.1": "Piyālaphaladāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap142:13.1": "Sobhitavaggo cuddasamo.",
"tha-ap142:14.1": "Tassuddānaṃ",
"tha-ap142:15.1": "Sobhitasudassano ca,",
"tha-ap142:15.2": "candano pupphachadano;",
"tha-ap142:15.3": "Raho campakapupphī ca,",
"tha-ap142:15.4": "atthasandassakena ca.",
"tha-ap142:16.1": "Ekapasādī sāladado,",
"tha-ap142:16.2": "dasamo phaladāyako;",
"tha-ap142:16.3": "Gāthāyo sattati dve ca,",
"tha-ap142:16.4": "gaṇitāyo vibhāvibhi."
}