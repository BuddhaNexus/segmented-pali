{
"tha-ap132:1.1": "Therāpadāna",
"tha-ap132:2.1": "Sereyyavagga",
"tha-ap132:3.1": "10. Padumapūjakattheraapadāna",
"tha-ap132:4.1": "“Himavantassāvidūre,",
"tha-ap132:4.2": "gotamo nāma pabbato;",
"tha-ap132:4.3": "Nānārukkhehi sañchanno,",
"tha-ap132:4.4": "mahābhūtagaṇālayo.",
"tha-ap132:5.1": "Vemajjhamhi ca tassāsi,",
"tha-ap132:5.2": "assamo abhinimmito;",
"tha-ap132:5.3": "Purakkhato sasissehi,",
"tha-ap132:5.4": "vasāmi assame ahaṃ.",
"tha-ap132:6.1": "Āyantu me sissagaṇā,",
"tha-ap132:6.2": "padumaṃ āharantu me;",
"tha-ap132:6.3": "Buddhapūjaṃ karissāmi,",
"tha-ap132:6.4": "dvipadindassa tādino.",
"tha-ap132:7.1": "Evanti te paṭissutvā,",
"tha-ap132:7.2": "padumaṃ āhariṃsu me;",
"tha-ap132:7.3": "Tathā nimittaṃ katvāhaṃ,",
"tha-ap132:7.4": "buddhassa abhiropayiṃ.",
"tha-ap132:8.1": "Sisse tadā samānetvā,",
"tha-ap132:8.2": "sādhukaṃ anusāsahaṃ;",
"tha-ap132:8.3": "Mā kho tumhe pamajjittha,",
"tha-ap132:8.4": "appamādo sukhāvaho.",
"tha-ap132:9.1": "Evaṃ samanusāsitvā,",
"tha-ap132:9.2": "te sisse vacanakkhame;",
"tha-ap132:9.3": "Appamādaguṇe yutto,",
"tha-ap132:9.4": "tadā kālaṅkato ahaṃ.",
"tha-ap132:10.1": "Ekanavutito kappe,",
"tha-ap132:10.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap132:10.3": "Duggatiṃ nābhijānāmi,",
"tha-ap132:10.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap132:11.1": "Ekapaññāsakappamhi,",
"tha-ap132:11.2": "rājā āsiṃ jaluttamo;",
"tha-ap132:11.3": "Sattaratanasampanno,",
"tha-ap132:11.4": "cakkavattī mahabbalo.",
"tha-ap132:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap132:12.4": "kataṃ buddhassa sāsanaṃ”. #1863",
"tha-ap132:13.1": "Itthaṃ sudaṃ āyasmā padumapūjako thero imā gāthāyo abhāsitthāti.",
"tha-ap132:14.1": "Padumapūjakattherassāpadānaṃ dasamaṃ.",
"tha-ap132:15.1": "Sereyyavaggo terasamo.",
"tha-ap132:16.1": "Tassuddānaṃ",
"tha-ap132:17.1": "Sereyyako pupphathūpi,",
"tha-ap132:17.2": "pāyaso gandhathomako;",
"tha-ap132:17.3": "Āsani phalasaññī ca,",
"tha-ap132:17.4": "gaṇṭhipadumapupphiyo;",
"tha-ap132:17.5": "Pañcuttarasatā gāthā,",
"tha-ap132:17.6": "gaṇitā atthadassibhi."
}