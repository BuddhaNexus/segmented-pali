{
"tha-ap418:1.1": "Therāpadāna",
"tha-ap418:2.1": "Bhaddālivagga",
"tha-ap418:3.1": "6. Ekadīpiyattheraapadāna",
"tha-ap418:4.1": "“Parinibbute sugate,",
"tha-ap418:4.2": "siddhatthe lokanāyake;",
"tha-ap418:4.3": "Sadevamānusā sabbe,",
"tha-ap418:4.4": "pūjenti dvipaduttamaṃ.",
"tha-ap418:5.1": "Āropite ca citake,",
"tha-ap418:5.2": "siddhatthe lokanāyake;",
"tha-ap418:5.3": "Yathāsakena thāmena,",
"tha-ap418:5.4": "citaṃ pūjenti satthuno.",
"tha-ap418:6.1": "Avidūre citakassa,",
"tha-ap418:6.2": "dīpaṃ ujjālayiṃ ahaṃ;",
"tha-ap418:6.3": "Yāva udeti sūriyo,",
"tha-ap418:6.4": "dīpaṃ me tāva ujjali.",
"tha-ap418:7.1": "Tena kammena sukatena,",
"tha-ap418:7.2": "cetanāpaṇidhīhi ca;",
"tha-ap418:7.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap418:7.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap418:8.1": "Tattha me sukataṃ byamhaṃ,",
"tha-ap418:8.2": "ekadīpīti ñāyati;",
"tha-ap418:8.3": "Dīpasatasahassāni,",
"tha-ap418:8.4": "byamhe pajjalare mama.",
"tha-ap418:9.1": "Udayantova sūriyo,",
"tha-ap418:9.2": "deho me jotate sadā;",
"tha-ap418:9.3": "Sappabhāhi sarīrassa,",
"tha-ap418:9.4": "āloko hoti me sadā.",
"tha-ap418:10.1": "Tirokuṭṭaṃ tiroselaṃ,",
"tha-ap418:10.2": "samatiggayha pabbataṃ;",
"tha-ap418:10.3": "Samantā yojanasataṃ,",
"tha-ap418:10.4": "passāmi cakkhunā ahaṃ.",
"tha-ap418:11.1": "Sattasattatikkhattuñca,",
"tha-ap418:11.2": "devaloke ramiṃ ahaṃ;",
"tha-ap418:11.3": "Ekatiṃsatikkhattuñca,",
"tha-ap418:11.4": "devarajjamakārayiṃ.",
"tha-ap418:12.1": "Aṭṭhavīsatikkhattuñca,",
"tha-ap418:12.2": "cakkavattī ahosahaṃ;",
"tha-ap418:12.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap418:12.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap418:13.1": "Devalokā cavitvāna,",
"tha-ap418:13.2": "nibbattiṃ mātukucchiyaṃ;",
"tha-ap418:13.3": "Mātukucchigatassāpi,",
"tha-ap418:13.4": "akkhi me na nimīlati.",
"tha-ap418:14.1": "Jātiyā catuvassohaṃ,",
"tha-ap418:14.2": "pabbajiṃ anagāriyaṃ;",
"tha-ap418:14.3": "Aḍḍhamāse asampatte,",
"tha-ap418:14.4": "arahattamapāpuṇiṃ.",
"tha-ap418:15.1": "Dibbacakkhuṃ visodhesiṃ,",
"tha-ap418:15.2": "bhavā sabbe samūhatā;",
"tha-ap418:15.3": "Sabbe kilesā sañchinnā,",
"tha-ap418:15.4": "ekadīpassidaṃ phalaṃ.",
"tha-ap418:16.1": "Tirokuṭṭaṃ tiroselaṃ,",
"tha-ap418:16.2": "pabbatañcāpi kevalaṃ;",
"tha-ap418:16.3": "Samatikkamma passāmi,",
"tha-ap418:16.4": "ekadīpassidaṃ phalaṃ.",
"tha-ap418:17.1": "Visamā me samā honti,",
"tha-ap418:17.2": "andhakāro na vijjati;",
"tha-ap418:17.3": "Nāhaṃ passāmi timiraṃ,",
"tha-ap418:17.4": "ekadīpassidaṃ phalaṃ.",
"tha-ap418:18.1": "Catunnavutito kappe,",
"tha-ap418:18.2": "yaṃ dīpamadadiṃ tadā;",
"tha-ap418:18.3": "Duggatiṃ nābhijānāmi,",
"tha-ap418:18.4": "ekadīpassidaṃ phalaṃ.",
"tha-ap418:19.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap418:19.4": "viharāmi anāsavo.",
"tha-ap418:20.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap418:20.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap418:21.1": "Paṭisambhidā catasso, … pe …",
"tha-ap418:21.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap418:22.1": "Itthaṃ sudaṃ āyasmā ekadīpiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap418:23.1": "Ekadīpiyattherassāpadānaṃ chaṭṭhaṃ."
}