{
"tha-ap398:1.1": "Therāpadāna",
"tha-ap398:2.1": "Pilindavacchavagga",
"tha-ap398:3.1": "6 Bākulattheraapadāna",
"tha-ap398:4.1": "“Himavantassāvidūre,",
"tha-ap398:4.2": "sobhito nāma pabbato;",
"tha-ap398:4.3": "Assamo sukato mayhaṃ,",
"tha-ap398:4.4": "sakasissehi māpito.",
"tha-ap398:5.1": "Maṇḍapā ca bahū tattha,",
"tha-ap398:5.2": "pupphitā sinduvārakā;",
"tha-ap398:5.3": "Kapitthā ca bahū tattha,",
"tha-ap398:5.4": "pupphitā jīvajīvakā.",
"tha-ap398:6.1": "Nigguṇḍiyo bahū tattha,",
"tha-ap398:6.2": "badarāmalakāni ca;",
"tha-ap398:6.3": "Phārusakā alābū ca,",
"tha-ap398:6.4": "puṇḍarīkā ca pupphitā.",
"tha-ap398:7.1": "Āḷakā beluvā tattha,",
"tha-ap398:7.2": "kadalī mātuluṅgakā;",
"tha-ap398:7.3": "Mahānāmā bahū tattha,",
"tha-ap398:7.4": "ajjunā ca piyaṅgukā.",
"tha-ap398:8.1": "Kosambā saḷalā nimbā,",
"tha-ap398:8.2": "nigrodhā ca kapitthanā;",
"tha-ap398:8.3": "Ediso assamo mayhaṃ,",
"tha-ap398:8.4": "sasissohaṃ tahiṃ vasiṃ.",
"tha-ap398:9.1": "Anomadassī bhagavā,",
"tha-ap398:9.2": "sayambhū lokanāyako;",
"tha-ap398:9.3": "Gavesaṃ paṭisallānaṃ,",
"tha-ap398:9.4": "mamassamamupāgami.",
"tha-ap398:10.1": "Upetamhi mahāvīre,",
"tha-ap398:10.2": "anomadassimahāyase;",
"tha-ap398:10.3": "Khaṇena lokanāthassa,",
"tha-ap398:10.4": "vātābādho samuṭṭhahi.",
"tha-ap398:11.1": "Vicaranto araññamhi,",
"tha-ap398:11.2": "addasaṃ lokanāyakaṃ;",
"tha-ap398:11.3": "Upagantvāna sambuddhaṃ,",
"tha-ap398:11.4": "cakkhumantaṃ mahāyasaṃ.",
"tha-ap398:12.1": "Iriyañcāpi disvāna,",
"tha-ap398:12.2": "upalakkhesahaṃ tadā;",
"tha-ap398:12.3": "Asaṃsayañhi buddhassa,",
"tha-ap398:12.4": "byādhi no udapajjatha.",
"tha-ap398:13.1": "Khippaṃ assamamāgañchiṃ,",
"tha-ap398:13.2": "mama sissāna santike;",
"tha-ap398:13.3": "Bhesajjaṃ kattukāmohaṃ,",
"tha-ap398:13.4": "sisse āmantayiṃ tadā.",
"tha-ap398:14.1": "Paṭissuṇitvāna me vākyaṃ,",
"tha-ap398:14.2": "sissā sabbe sagāravā;",
"tha-ap398:14.3": "Ekajjhaṃ sannipatiṃsu,",
"tha-ap398:14.4": "satthugāravatā mama.",
"tha-ap398:15.1": "Khippaṃ pabbatamāruyha,",
"tha-ap398:15.2": "sabbosadhamahāsahaṃ;",
"tha-ap398:15.3": "Pānīyayogaṃ katvāna,",
"tha-ap398:15.4": "buddhaseṭṭhassadāsahaṃ.",
"tha-ap398:16.1": "Paribhutte mahāvīre,",
"tha-ap398:16.2": "sabbaññulokanāyake;",
"tha-ap398:16.3": "Khippaṃ vāto vūpasami,",
"tha-ap398:16.4": "sugatassa mahesino.",
"tha-ap398:17.1": "Passaddhaṃ darathaṃ disvā,",
"tha-ap398:17.2": "anomadassī mahāyaso;",
"tha-ap398:17.3": "Sakāsane nisīditvā,",
"tha-ap398:17.4": "imā gāthā abhāsatha.",
"tha-ap398:18.1": "‘Yo me pādāsi bhesajjaṃ,",
"tha-ap398:18.2": "byādhiñca samayī mama;",
"tha-ap398:18.3": "Tamahaṃ kittayissāmi,",
"tha-ap398:18.4": "suṇātha mama bhāsato.",
"tha-ap398:19.1": "Kappasatasahassāni,",
"tha-ap398:19.2": "devaloke ramissati;",
"tha-ap398:19.3": "Vādite tūriye tattha,",
"tha-ap398:19.4": "modissati sadā ayaṃ.",
"tha-ap398:20.1": "Manussalokamāgantvā,",
"tha-ap398:20.2": "sukkamūlena codito;",
"tha-ap398:20.3": "Sahassakkhattuṃ rājā ca,",
"tha-ap398:20.4": "cakkavattī bhavissati.",
"tha-ap398:21.1": "Pañcapaññāsakappamhi,",
"tha-ap398:21.2": "anomo nāma khattiyo;",
"tha-ap398:21.3": "Cāturanto vijitāvī,",
"tha-ap398:21.4": "jambumaṇḍassa issaro.",
"tha-ap398:22.1": "Sattaratanasampanno,",
"tha-ap398:22.2": "cakkavattī mahabbalo;",
"tha-ap398:22.3": "Tāvatiṃsepi khobhetvā,",
"tha-ap398:22.4": "issaraṃ kārayissati.",
"tha-ap398:23.1": "Devabhūto manusso vā,",
"tha-ap398:23.2": "appābādho bhavissati;",
"tha-ap398:23.3": "Pariggahaṃ vivajjetvā,",
"tha-ap398:23.4": "byādhiṃ loke tarissati.",
"tha-ap398:24.1": "Apparimeyye ito kappe,",
"tha-ap398:24.2": "okkākakulasambhavo;",
"tha-ap398:24.3": "Gotamo nāma gottena,",
"tha-ap398:24.4": "satthā loke bhavissati.",
"tha-ap398:25.1": "Tassa dhammesu dāyādo,",
"tha-ap398:25.2": "oraso dhammanimmito;",
"tha-ap398:25.3": "Sabbāsave pariññāya,",
"tha-ap398:25.4": "nibbāyissatināsavo.",
"tha-ap398:26.1": "Kilese jhāpayitvāna,",
"tha-ap398:26.2": "taṇhāsotaṃ tarissati;",
"tha-ap398:26.3": "Bākulo nāma nāmena,",
"tha-ap398:26.4": "hessati satthu sāvako.",
"tha-ap398:27.1": "Idaṃ sabbaṃ abhiññāya,",
"tha-ap398:27.2": "gotamo sakyapuṅgavo;",
"tha-ap398:27.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap398:27.4": "etadagge ṭhapessati’.",
"tha-ap398:28.1": "Anomadassī bhagavā,",
"tha-ap398:28.2": "sayambhū lokanāyako;",
"tha-ap398:28.3": "Vivekānuvilokento,",
"tha-ap398:28.4": "mamassamamupāgami.",
"tha-ap398:29.1": "Upāgataṃ mahāvīraṃ,",
"tha-ap398:29.2": "sabbaññuṃ lokanāyakaṃ;",
"tha-ap398:29.3": "Sabbosadhena tappesiṃ,",
"tha-ap398:29.4": "pasanno sehi pāṇibhi.",
"tha-ap398:30.1": "Tassa me sukataṃ kammaṃ,",
"tha-ap398:30.2": "sukhette bījasampadā;",
"tha-ap398:30.3": "Khepetuṃ neva sakkomi,",
"tha-ap398:30.4": "tadā hi sukataṃ mama.",
"tha-ap398:31.1": "Lābhā mama suladdhaṃ me,",
"tha-ap398:31.2": "yohaṃ addakkhi nāyakaṃ;",
"tha-ap398:31.3": "Tena kammāvasesena,",
"tha-ap398:31.4": "pattomhi acalaṃ padaṃ.",
"tha-ap398:32.1": "Sabbametaṃ abhiññāya,",
"tha-ap398:32.2": "gotamo sakyapuṅgavo;",
"tha-ap398:32.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap398:32.4": "etadagge ṭhapesi maṃ.",
"tha-ap398:33.1": "Aparimeyye ito kappe,",
"tha-ap398:33.2": "yaṃ kammamakariṃ tadā;",
"tha-ap398:33.3": "Duggatiṃ nābhijānāmi,",
"tha-ap398:33.4": "bhesajjassa idaṃ phalaṃ.",
"tha-ap398:34.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap398:34.2": "bhavā sabbe samūhatā;",
"tha-ap398:34.3": "Sabbāsavā parikkhīṇā,",
"tha-ap398:34.4": "natthi dāni punabbhavo.",
"tha-ap398:35.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap398:35.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap398:36.1": "Paṭisambhidā catasso, … pe …",
"tha-ap398:36.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap398:37.1": "Itthaṃ sudaṃ āyasmā bākulo thero imā gāthāyo abhāsitthāti.",
"tha-ap398:38.1": "Bākulattherassāpadānaṃ chaṭṭhaṃ."
}