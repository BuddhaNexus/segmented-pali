{
"tha-ap36:1.1": "Therāpadāna",
"tha-ap36:2.1": "Kuṇḍadhānavagga",
"tha-ap36:3.1": "4. Kāḷudāyittheraapadāna",
"tha-ap36:4.1": "“Padumuttarabuddhassa,",
"tha-ap36:4.2": "lokajeṭṭhassa tādino;",
"tha-ap36:4.3": "Addhānaṃ paṭipannassa,",
"tha-ap36:4.4": "carato cārikaṃ tadā.",
"tha-ap36:5.1": "Suphullaṃ padumaṃ gayha,",
"tha-ap36:5.2": "uppalaṃ mallikañcahaṃ;",
"tha-ap36:5.3": "Paramannaṃ gahetvāna,",
"tha-ap36:5.4": "adāsiṃ satthuno ahaṃ.",
"tha-ap36:6.1": "Paribhuñji mahāvīro,",
"tha-ap36:6.2": "paramannaṃ subhojanaṃ;",
"tha-ap36:6.3": "Tañca pupphaṃ gahetvāna,",
"tha-ap36:6.4": "janassa sampadassayi.",
"tha-ap36:7.1": "Iṭṭhaṃ kantaṃ piyaṃ loke,",
"tha-ap36:7.2": "jalajaṃ pupphamuttamaṃ;",
"tha-ap36:7.3": "Sudukkaraṃ kataṃ tena,",
"tha-ap36:7.4": "yo me pupphaṃ adāsidaṃ.",
"tha-ap36:8.1": "Yo pupphamabhiropesi,",
"tha-ap36:8.2": "paramannañcadāsi me;",
"tha-ap36:8.3": "Tamahaṃ kittayissāmi,",
"tha-ap36:8.4": "suṇātha mama bhāsato.",
"tha-ap36:9.1": "‘Dasa aṭṭha cakkhattuṃ so,",
"tha-ap36:9.2": "devarajjaṃ karissati;",
"tha-ap36:9.3": "Uppalaṃ padumañcāpi,",
"tha-ap36:9.4": "mallikañca taduttari.",
"tha-ap36:10.1": "Assa puññavipākena,",
"tha-ap36:10.2": "dibbagandhasamāyutaṃ;",
"tha-ap36:10.3": "Ākāse chadanaṃ katvā,",
"tha-ap36:10.4": "dhārayissati tāvade.",
"tha-ap36:11.1": "Pañcavīsatikkhattuñca,",
"tha-ap36:11.2": "cakkavattī bhavissati;",
"tha-ap36:11.3": "Pathabyā rajjaṃ pañcasataṃ,",
"tha-ap36:11.4": "vasudhaṃ āvasissati.",
"tha-ap36:12.1": "Kappasatasahassamhi,",
"tha-ap36:12.2": "okkākakulasambhavo;",
"tha-ap36:12.3": "Gotamo nāma gottena,",
"tha-ap36:12.4": "satthā loke bhavissati.",
"tha-ap36:13.1": "Sakakammābhiraddho so,",
"tha-ap36:13.2": "sukkamūlena codito;",
"tha-ap36:13.3": "Sakyānaṃ nandijanano,",
"tha-ap36:13.4": "ñātibandhu bhavissati.",
"tha-ap36:14.1": "So pacchā pabbajitvāna,",
"tha-ap36:14.2": "sukkamūlena codito;",
"tha-ap36:14.3": "Sabbāsave pariññāya,",
"tha-ap36:14.4": "nibbāyissatināsavo.",
"tha-ap36:15.1": "Paṭisambhidamanuppattaṃ,",
"tha-ap36:15.2": "katakiccamanāsavaṃ;",
"tha-ap36:15.3": "Gotamo lokabandhu taṃ,",
"tha-ap36:15.4": "etadagge ṭhapessati.",
"tha-ap36:16.1": "Padhānapahitatto so,",
"tha-ap36:16.2": "upasanto nirūpadhi;",
"tha-ap36:16.3": "Udāyī nāma nāmena,",
"tha-ap36:16.4": "hessati satthu sāvako’.",
"tha-ap36:17.1": "Rāgo doso ca moho ca,",
"tha-ap36:17.2": "māno makkho ca dhaṃsito;",
"tha-ap36:17.3": "Sabbāsave pariññāya,",
"tha-ap36:17.4": "viharāmi anāsavo.",
"tha-ap36:18.1": "Tosayiñcāpi sambuddhaṃ,",
"tha-ap36:18.2": "ātāpī nipako ahaṃ;",
"tha-ap36:18.3": "Pasādito ca sambuddho,",
"tha-ap36:18.4": "etadagge ṭhapesi maṃ.",
"tha-ap36:19.1": "Paṭisambhidā catasso, … pe …",
"tha-ap36:19.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap36:20.1": "Itthaṃ sudaṃ āyasmā kāḷudāyī thero imā gāthāyo abhāsitthāti.",
"tha-ap36:21.1": "Kāḷudāyittherassāpadānaṃ catutthaṃ."
}