{
"tha-ap437:1.1": "Therāpadāna",
"tha-ap437:2.1": "Ekavihārivagga",
"tha-ap437:3.1": "5. Ucchukhaṇḍikattheraapadāna",
"tha-ap437:4.1": "“Nagare bandhumatiyā,",
"tha-ap437:4.2": "dvārapālo ahosahaṃ;",
"tha-ap437:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap437:4.4": "sabbadhammāna pāraguṃ.",
"tha-ap437:5.1": "Ucchukhaṇḍikamādāya,",
"tha-ap437:5.2": "buddhaseṭṭhassadāsahaṃ;",
"tha-ap437:5.3": "Pasannacitto sumano,",
"tha-ap437:5.4": "vipassissa mahesino.",
"tha-ap437:6.1": "Ekanavutito kappe,",
"tha-ap437:6.2": "yaṃ ucchumadadiṃ tadā;",
"tha-ap437:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap437:6.4": "ucchukhaṇḍassidaṃ phalaṃ.",
"tha-ap437:7.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap437:7.4": "viharāmi anāsavo.",
"tha-ap437:8.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap437:8.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap437:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap437:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap437:10.1": "Itthaṃ sudaṃ āyasmā ucchukhaṇḍiko thero imā gāthāyo abhāsitthāti.",
"tha-ap437:11.1": "Ucchukhaṇḍikattherassāpadānaṃ pañcamaṃ."
}