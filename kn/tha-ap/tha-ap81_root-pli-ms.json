{
"tha-ap81:1.1": "Therāpadāna",
"tha-ap81:2.1": "Nāgasamālavagga",
"tha-ap81:3.1": "9. Ṭhitañjaliyattheraapadāna",
"tha-ap81:4.1": "“Migaluddo pure āsiṃ,",
"tha-ap81:4.2": "Araññe kānane ahaṃ;",
"tha-ap81:4.3": "Tattha addasaṃ sambuddhaṃ,",
"tha-ap81:4.4": "Bāttiṃsavaralakkhaṇaṃ.",
"tha-ap81:5.1": "Tatthāhaṃ añjaliṃ katvā,",
"tha-ap81:5.2": "pakkāmiṃ pācināmukho;",
"tha-ap81:5.3": "Avidūre nisinnassa,",
"tha-ap81:5.4": "niyake paṇṇasanthare.",
"tha-ap81:6.1": "Tato me asanīpāto,",
"tha-ap81:6.2": "matthake nipatī tadā;",
"tha-ap81:6.3": "Sohaṃ maraṇakālamhi,",
"tha-ap81:6.4": "akāsiṃ punarañjaliṃ.",
"tha-ap81:7.1": "Dvenavute ito kappe,",
"tha-ap81:7.2": "añjaliṃ akariṃ tadā;",
"tha-ap81:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap81:7.4": "añjalissa idaṃ phalaṃ.",
"tha-ap81:8.1": "Catupaṇṇāsakappamhi,",
"tha-ap81:8.2": "migaketusanāmako;",
"tha-ap81:8.3": "Sattaratanasampanno,",
"tha-ap81:8.4": "cakkavattī mahabbalo.",
"tha-ap81:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap81:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap81:10.1": "Itthaṃ sudaṃ āyasmā ṭhitañjaliyo thero imā gāthāyo abhāsitthāti.",
"tha-ap81:11.1": "Ṭhitañjaliyattherassāpadānaṃ navamaṃ."
}