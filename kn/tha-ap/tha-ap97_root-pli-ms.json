{
"tha-ap97:1.1": "Therāpadāna",
"tha-ap97:2.1": "Sudhāvagga",
"tha-ap97:3.1": "5. Gandhamāliyattheraapadāna",
"tha-ap97:4.1": "“Siddhatthassa bhagavato,",
"tha-ap97:4.2": "gandhathūpaṃ akāsahaṃ;",
"tha-ap97:4.3": "Sumanehi paṭicchannaṃ,",
"tha-ap97:4.4": "buddhānucchavikaṃ kataṃ.",
"tha-ap97:5.1": "Kañcanagghiyasaṅkāsaṃ,",
"tha-ap97:5.2": "buddhaṃ lokagganāyakaṃ;",
"tha-ap97:5.3": "Indīvaraṃva jalitaṃ,",
"tha-ap97:5.4": "ādittaṃva hutāsanaṃ.",
"tha-ap97:6.1": "Byagghūsabhaṃva pavaraṃ,",
"tha-ap97:6.2": "abhijātaṃva kesariṃ;",
"tha-ap97:6.3": "Nisinnaṃ samaṇānaggaṃ,",
"tha-ap97:6.4": "bhikkhusaṃghapurakkhataṃ.",
"tha-ap97:7.1": "Vanditvā satthuno pāde,",
"tha-ap97:7.2": "pakkāmiṃ uttarāmukho;",
"tha-ap97:7.3": "Catunnavutito kappe,",
"tha-ap97:7.4": "gandhamālaṃ yato adaṃ.",
"tha-ap97:8.1": "Buddhe katassa kārassa,",
"tha-ap97:8.2": "phalenāhaṃ visesato;",
"tha-ap97:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap97:8.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap97:9.1": "Cattārīsamhi ekūne,",
"tha-ap97:9.2": "kappe āsiṃsu soḷasa;",
"tha-ap97:9.3": "Devagandhasanāmā te,",
"tha-ap97:9.4": "rājāno cakkavattino.",
"tha-ap97:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap97:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap97:11.1": "Itthaṃ sudaṃ āyasmā gandhamāliyo thero imā gāthāyo abhāsitthāti.",
"tha-ap97:12.1": "Gandhamāliyattherassāpadānaṃ pañcamaṃ."
}