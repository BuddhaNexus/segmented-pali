{
"tha-ap48:1.1": "Therāpadāna",
"tha-ap48:2.1": "Upālivagga",
"tha-ap48:3.1": "6. Padumacchadaniyattheraapadāna",
"tha-ap48:4.1": "“Nibbute lokanāthamhi,",
"tha-ap48:4.2": "vipassimhaggapuggale;",
"tha-ap48:4.3": "Suphullapadumaṃ gayha,",
"tha-ap48:4.4": "citamāropayiṃ ahaṃ.",
"tha-ap48:5.1": "Āropite ca citake,",
"tha-ap48:5.2": "vehāsaṃ nabhamuggami;",
"tha-ap48:5.3": "Ākāse chadanaṃ katvā,",
"tha-ap48:5.4": "citakamhi adhārayi.",
"tha-ap48:6.1": "Ekanavutito kappe,",
"tha-ap48:6.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap48:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap48:6.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap48:7.1": "Sattatālīsito kappe,",
"tha-ap48:7.2": "padumissaranāmako;",
"tha-ap48:7.3": "Cāturanto vijitāvī,",
"tha-ap48:7.4": "cakkavattī mahabbalo.",
"tha-ap48:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap48:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap48:9.1": "Itthaṃ sudaṃ āyasmā padumacchadaniyo thero imā gāthāyo abhāsitthāti.",
"tha-ap48:10.1": "Padumacchadaniyattherassāpadānaṃ chaṭṭhaṃ."
}