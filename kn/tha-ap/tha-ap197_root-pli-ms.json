{
"tha-ap197:1.1": "Therāpadāna",
"tha-ap197:2.1": "Tamālapupphiyavagga",
"tha-ap197:3.1": "5. Aṅkolakattheraapadāna",
"tha-ap197:4.1": "“Aṅkolaṃ pupphitaṃ disvā,",
"tha-ap197:4.2": "mālāvaraṃ sakosakaṃ;",
"tha-ap197:4.3": "Ocinitvāna taṃ pupphaṃ,",
"tha-ap197:4.4": "agamaṃ buddhasantikaṃ.",
"tha-ap197:5.1": "Siddhattho tamhi samaye,",
"tha-ap197:5.2": "patilīno mahāmuni;",
"tha-ap197:5.3": "Muhuttaṃ paṭimānetvā,",
"tha-ap197:5.4": "guhāyaṃ pupphamokiriṃ.",
"tha-ap197:6.1": "Catunnavutito kappe,",
"tha-ap197:6.2": "Yaṃ pupphamabhipūjayiṃ;",
"tha-ap197:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap197:6.4": "Pupphadānassidaṃ phalaṃ.",
"tha-ap197:7.1": "Chattiṃsamhi ito kappe,",
"tha-ap197:7.2": "āseko devagajjito;",
"tha-ap197:7.3": "Sattaratanasampanno,",
"tha-ap197:7.4": "cakkavattī mahabbalo.",
"tha-ap197:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap197:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap197:9.1": "Itthaṃ sudaṃ āyasmā aṅkolako thero imā gāthāyo abhāsitthāti.",
"tha-ap197:10.1": "Aṅkolakattherassāpadānaṃ pañcamaṃ."
}