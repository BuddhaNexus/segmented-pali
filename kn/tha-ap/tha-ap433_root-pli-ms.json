{
"tha-ap433:1.1": "Therāpadāna",
"tha-ap433:2.1": "Ekavihārivagga",
"tha-ap433:3.1": "1 Ekavihārikattheraapadāna",
"tha-ap433:4.1": "“Imamhi bhaddake kappe,",
"tha-ap433:4.2": "brahmabandhu mahāyaso;",
"tha-ap433:4.3": "Kassapo nāma gottena,",
"tha-ap433:4.4": "uppajji vadataṃ varo.",
"tha-ap433:5.1": "Nippapañco nirālambo,",
"tha-ap433:5.2": "ākāsasamamānaso;",
"tha-ap433:5.3": "Suññatābahulo tādī,",
"tha-ap433:5.4": "animittarato vasī.",
"tha-ap433:6.1": "Asaṅgacitto nikleso,",
"tha-ap433:6.2": "asaṃsaṭṭho kule gaṇe;",
"tha-ap433:6.3": "Mahākāruṇiko vīro,",
"tha-ap433:6.4": "vinayopāyakovido.",
"tha-ap433:7.1": "Uyyutto parakiccesu,",
"tha-ap433:7.2": "vinayanto sadevake;",
"tha-ap433:7.3": "Nibbānagamanaṃ maggaṃ,",
"tha-ap433:7.4": "gatiṃ paṅkavisosanaṃ.",
"tha-ap433:8.1": "Amataṃ paramassādaṃ,",
"tha-ap433:8.2": "jarāmaccunivāraṇaṃ;",
"tha-ap433:8.3": "Mahāparisamajjhe so,",
"tha-ap433:8.4": "nisinno lokatārako.",
"tha-ap433:9.1": "Karavīkaruto nātho,",
"tha-ap433:9.2": "brahmaghoso tathāgato;",
"tha-ap433:9.3": "Uddharanto mahāduggā,",
"tha-ap433:9.4": "vippanaṭṭhe anāyake.",
"tha-ap433:10.1": "Desento virajaṃ dhammaṃ,",
"tha-ap433:10.2": "diṭṭho me lokanāyako;",
"tha-ap433:10.3": "Tassa dhammaṃ suṇitvāna,",
"tha-ap433:10.4": "pabbajiṃ anagāriyaṃ.",
"tha-ap433:11.1": "Pabbajitvā tadāpāhaṃ,",
"tha-ap433:11.2": "cintento jinasāsanaṃ;",
"tha-ap433:11.3": "Ekakova vane ramme,",
"tha-ap433:11.4": "vasiṃ saṃsaggapīḷito.",
"tha-ap433:12.1": "Sakkāyavūpakāso me,",
"tha-ap433:12.2": "hetubhūto mamābhavī;",
"tha-ap433:12.3": "Manaso vūpakāsassa,",
"tha-ap433:12.4": "saṃsaggabhayadassino.",
"tha-ap433:13.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap433:13.2": "bhavā sabbe samūhatā;",
"tha-ap433:13.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap433:13.4": "viharāmi anāsavo.",
"tha-ap433:14.1": "Svāgataṃ vata me āsi,",
"tha-ap433:14.2": "mama buddhassa santike;",
"tha-ap433:14.3": "Tisso vijjā anuppattā,",
"tha-ap433:14.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap433:15.1": "Paṭisambhidā catasso,",
"tha-ap433:15.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap433:15.3": "Chaḷabhiññā sacchikatā,",
"tha-ap433:15.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap433:16.1": "Itthaṃ sudaṃ āyasmā ekavihāriko thero imā gāthāyo abhāsitthāti.",
"tha-ap433:17.1": "Ekavihārikattherassāpadānaṃ paṭhamaṃ."
}