{
"tha-ap17:1.1": "Therāpadāna",
"tha-ap17:2.1": "Sīhāsaniyavagga",
"tha-ap17:3.1": "5 Pilindavacchattheraapadāna",
"tha-ap17:4.1": "“Nibbute lokanāthamhi,",
"tha-ap17:4.2": "sumedhe aggapuggale;",
"tha-ap17:4.3": "Pasannacitto sumano,",
"tha-ap17:4.4": "thūpapūjaṃ akāsahaṃ.",
"tha-ap17:5.1": "Ye ca khīṇāsavā tattha,",
"tha-ap17:5.2": "chaḷabhiññā mahiddhikā;",
"tha-ap17:5.3": "Tehaṃ tattha samānetvā,",
"tha-ap17:5.4": "saṃghabhattaṃ akāsahaṃ.",
"tha-ap17:6.1": "Sumedhassa bhagavato,",
"tha-ap17:6.2": "upaṭṭhāko tadā ahu;",
"tha-ap17:6.3": "Sumedho nāma nāmena,",
"tha-ap17:6.4": "anumodittha so tadā.",
"tha-ap17:7.1": "Tena cittappasādena,",
"tha-ap17:7.2": "vimānaṃ upapajjahaṃ;",
"tha-ap17:7.3": "Chaḷāsītisahassāni,",
"tha-ap17:7.4": "accharāyo ramiṃsu me.",
"tha-ap17:8.1": "Mameva anuvattanti,",
"tha-ap17:8.2": "sabbakāmehi tā sadā;",
"tha-ap17:8.3": "Aññe deve abhibhomi,",
"tha-ap17:8.4": "puññakammassidaṃ phalaṃ.",
"tha-ap17:9.1": "Pañcavīsatikappamhi,",
"tha-ap17:9.2": "varuṇo nāma khattiyo;",
"tha-ap17:9.3": "Visuddhabhojano āsiṃ,",
"tha-ap17:9.4": "cakkavattī ahaṃ tadā.",
"tha-ap17:10.1": "Na te bījaṃ pavapanti,",
"tha-ap17:10.2": "napi nīyanti naṅgalā;",
"tha-ap17:10.3": "Akaṭṭhapākimaṃ sāliṃ,",
"tha-ap17:10.4": "paribhuñjanti mānusā.",
"tha-ap17:11.1": "Tattha rajjaṃ karitvāna,",
"tha-ap17:11.2": "devattaṃ puna gacchahaṃ;",
"tha-ap17:11.3": "Tadāpi edisā mayhaṃ,",
"tha-ap17:11.4": "nibbattā bhogasampadā.",
"tha-ap17:12.1": "Na maṃ mittā amittā vā,",
"tha-ap17:12.2": "hiṃsanti sabbapāṇino;",
"tha-ap17:12.3": "Sabbesampi piyo homi,",
"tha-ap17:12.4": "puññakammassidaṃ phalaṃ.",
"tha-ap17:13.1": "Tiṃsakappasahassamhi,",
"tha-ap17:13.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap17:13.3": "Duggatiṃ nābhijānāmi,",
"tha-ap17:13.4": "gandhālepassidaṃ phalaṃ.",
"tha-ap17:14.1": "Imasmiṃ bhaddake kappe,",
"tha-ap17:14.2": "eko āsiṃ janādhipo;",
"tha-ap17:14.3": "Mahānubhāvo rājāhaṃ,",
"tha-ap17:14.4": "cakkavattī mahabbalo.",
"tha-ap17:15.1": "Sohaṃ pañcasu sīlesu,",
"tha-ap17:15.2": "ṭhapetvā janataṃ bahuṃ;",
"tha-ap17:15.3": "Pāpetvā sugatiṃyeva,",
"tha-ap17:15.4": "devatānaṃ piyo ahuṃ.",
"tha-ap17:16.1": "Paṭisambhidā catasso,",
"tha-ap17:16.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap17:16.3": "Chaḷabhiññā sacchikatā,",
"tha-ap17:16.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap17:17.1": "Itthaṃ sudaṃ āyasmā pilindavaccho thero imā gāthāyo abhāsitthāti.",
"tha-ap17:18.1": "Pilindavacchattherassāpadānaṃ pañcamaṃ."
}