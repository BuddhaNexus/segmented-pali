{
"tha-ap375:1.1": "Therāpadāna",
"tha-ap375:2.1": "Bodhivandanavagga",
"tha-ap375:3.1": "3 Tīṇuppalamāliyattheraapadāna",
"tha-ap375:4.1": "“Candabhāgānadītīre,",
"tha-ap375:4.2": "ahosiṃ vānaro tadā;",
"tha-ap375:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap375:4.4": "nisinnaṃ pabbatantare.",
"tha-ap375:5.1": "Obhāsentaṃ disā sabbā,",
"tha-ap375:5.2": "sālarājaṃva phullitaṃ;",
"tha-ap375:5.3": "Lakkhaṇabyañjanūpetaṃ,",
"tha-ap375:5.4": "disvānattamano ahaṃ.",
"tha-ap375:6.1": "Udaggacitto sumano,",
"tha-ap375:6.2": "pītiyā haṭṭhamānaso;",
"tha-ap375:6.3": "Tīṇi uppalapupphāni,",
"tha-ap375:6.4": "matthake abhiropayiṃ.",
"tha-ap375:7.1": "Pūjayitvāna pupphāni,",
"tha-ap375:7.2": "phussassāhaṃ mahesino;",
"tha-ap375:7.3": "Sagāravo bhavitvāna,",
"tha-ap375:7.4": "pakkāmiṃ uttarāmukho.",
"tha-ap375:8.1": "Gacchanto paṭikuṭiko,",
"tha-ap375:8.2": "vippasannena cetasā;",
"tha-ap375:8.3": "Selantare patitvāna,",
"tha-ap375:8.4": "pāpuṇiṃ jīvitakkhayaṃ.",
"tha-ap375:9.1": "Tena kammena sukatena,",
"tha-ap375:9.2": "cetanāpaṇidhīhi ca;",
"tha-ap375:9.3": "Jahitvā purimaṃ jātiṃ,",
"tha-ap375:9.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap375:10.1": "Satānaṃ tīṇikkhattuñca,",
"tha-ap375:10.2": "devarajjamakārayiṃ;",
"tha-ap375:10.3": "Satānaṃ pañcakkhattuñca,",
"tha-ap375:10.4": "cakkavattī ahosahaṃ.",
"tha-ap375:11.1": "Dvenavute ito kappe,",
"tha-ap375:11.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap375:11.3": "Duggatiṃ nābhijānāmi,",
"tha-ap375:11.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap375:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap375:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap375:13.1": "Itthaṃ sudaṃ āyasmā tīṇuppalamāliyo thero imā gāthāyo abhāsitthāti.",
"tha-ap375:14.1": "Tīṇuppalamāliyattherassāpadānaṃ tatiyaṃ."
}