{
"tha-ap243:1.1": "Therāpadāna",
"tha-ap243:2.1": "Tuvaradāyakavagga",
"tha-ap243:3.1": "1 Tuvaradāyakattheraapadāna",
"tha-ap243:4.1": "“Migaluddo pure āsiṃ,",
"tha-ap243:4.2": "araññe kānane ahaṃ;",
"tha-ap243:4.3": "Bharitvā tuvaramādāya,",
"tha-ap243:4.4": "saṃghassa adadiṃ ahaṃ.",
"tha-ap243:5.1": "Ekanavutito kappe,",
"tha-ap243:5.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap243:5.3": "Duggatiṃ nābhijānāmi,",
"tha-ap243:5.4": "tuvarassa idaṃ phalaṃ.",
"tha-ap243:6.1": "Paṭisambhidā catasso,",
"tha-ap243:6.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap243:6.3": "Chaḷabhiññā sacchikatā,",
"tha-ap243:6.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap243:7.1": "Itthaṃ sudaṃ āyasmā tuvaradāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap243:8.1": "Tuvaradāyakattherassāpadānaṃ paṭhamaṃ."
}