{
"tha-ap422:1.1": "Therāpadāna",
"tha-ap422:2.1": "Bhaddālivagga",
"tha-ap422:3.1": "10. Mañcadāyakattheraapadāna",
"tha-ap422:4.1": "“Parinibbute kāruṇike,",
"tha-ap422:4.2": "siddhatthe lokanāyake;",
"tha-ap422:4.3": "Vitthārike pāvacane,",
"tha-ap422:4.4": "devamānusasakkate.",
"tha-ap422:5.1": "Caṇḍālo āsahaṃ tattha,",
"tha-ap422:5.2": "āsandipīṭhakārako;",
"tha-ap422:5.3": "Tena kammena jīvāmi,",
"tha-ap422:5.4": "tena posemi dārake.",
"tha-ap422:6.1": "Āsandiṃ sukataṃ katvā,",
"tha-ap422:6.2": "pasanno sehi pāṇibhi;",
"tha-ap422:6.3": "Sayamevupagantvāna,",
"tha-ap422:6.4": "bhikkhusaṃghassadāsahaṃ.",
"tha-ap422:7.1": "Tena kammena sukatena,",
"tha-ap422:7.2": "cetanāpaṇidhīhi ca;",
"tha-ap422:7.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap422:7.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap422:8.1": "Devalokagato santo,",
"tha-ap422:8.2": "modāmi tidase gaṇe;",
"tha-ap422:8.3": "Sayanāni mahagghāni,",
"tha-ap422:8.4": "nibbattanti yadicchakaṃ.",
"tha-ap422:9.1": "Paññāsakkhattuṃ devindo,",
"tha-ap422:9.2": "devarajjamakārayiṃ;",
"tha-ap422:9.3": "Asītikkhattuṃ rājā ca,",
"tha-ap422:9.4": "cakkavattī ahosahaṃ.",
"tha-ap422:10.1": "Padesarajjaṃ vipulaṃ,",
"tha-ap422:10.2": "gaṇanāto asaṅkhiyaṃ;",
"tha-ap422:10.3": "Sukhito yasavā homi,",
"tha-ap422:10.4": "mañcadānassidaṃ phalaṃ.",
"tha-ap422:11.1": "Devalokā cavitvāna,",
"tha-ap422:11.2": "emi ce mānusaṃ bhavaṃ;",
"tha-ap422:11.3": "Mahārahā susayanā,",
"tha-ap422:11.4": "sayameva bhavanti me.",
"tha-ap422:12.1": "Ayaṃ pacchimako mayhaṃ,",
"tha-ap422:12.2": "carimo vattate bhavo;",
"tha-ap422:12.3": "Ajjāpi sayane kāle,",
"tha-ap422:12.4": "sayanaṃ upatiṭṭhati.",
"tha-ap422:13.1": "Catunnavutito kappe,",
"tha-ap422:13.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap422:13.3": "Duggatiṃ nābhijānāmi,",
"tha-ap422:13.4": "mañcadānassidaṃ phalaṃ.",
"tha-ap422:14.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap422:14.4": "viharāmi anāsavo.",
"tha-ap422:15.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap422:15.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap422:16.1": "Paṭisambhidā catasso, … pe …",
"tha-ap422:16.4": "kataṃ buddhassa sāsanaṃ”. #4460",
"tha-ap422:17.1": "Itthaṃ sudaṃ āyasmā mañcadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap422:18.1": "Mañcadāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap422:19.1": "Bhaddālivaggo bācattālīsamo.",
"tha-ap422:20.1": "Tassuddānaṃ",
"tha-ap422:21.1": "Bhaddālī ekachatto ca,",
"tha-ap422:21.2": "tiṇasūlo ca maṃsado;",
"tha-ap422:21.3": "Nāgapallaviko dīpī,",
"tha-ap422:21.4": "ucchaṅgi yāgudāyako.",
"tha-ap422:22.1": "Patthodanī mañcadado,",
"tha-ap422:22.2": "gāthāyo gaṇitā ciha;",
"tha-ap422:22.3": "Dvesatāni ca gāthānaṃ,",
"tha-ap422:22.4": "gāthā cekā taduttari."
}