{
"tha-ap396:1.1": "Therāpadāna",
"tha-ap396:2.1": "Pilindavacchavagga",
"tha-ap396:3.1": "4. Madhudāyakattheraapadāna",
"tha-ap396:4.1": "“Sindhuyā nadiyā tīre,",
"tha-ap396:4.2": "sukato assamo mama;",
"tha-ap396:4.3": "Tattha vācemahaṃ sisse,",
"tha-ap396:4.4": "itihāsaṃ salakkhaṇaṃ.",
"tha-ap396:5.1": "Dhammakāmā vinītā te,",
"tha-ap396:5.2": "sotukāmā susāsanaṃ;",
"tha-ap396:5.3": "Chaḷaṅge pāramippattā,",
"tha-ap396:5.4": "sindhukūle vasanti te.",
"tha-ap396:6.1": "Uppātagamane ceva,",
"tha-ap396:6.2": "lakkhaṇesu ca kovidā;",
"tha-ap396:6.3": "Uttamatthaṃ gavesantā,",
"tha-ap396:6.4": "vasanti vipine tadā.",
"tha-ap396:7.1": "Sumedho nāma sambuddho,",
"tha-ap396:7.2": "loke uppajji tāvade;",
"tha-ap396:7.3": "Amhākaṃ anukampanto,",
"tha-ap396:7.4": "upāgacchi vināyako.",
"tha-ap396:8.1": "Upāgataṃ mahāvīraṃ,",
"tha-ap396:8.2": "sumedhaṃ lokanāyakaṃ;",
"tha-ap396:8.3": "Tiṇasanthārakaṃ katvā,",
"tha-ap396:8.4": "lokajeṭṭhassadāsahaṃ.",
"tha-ap396:9.1": "Vipināto madhuṃ gayha,",
"tha-ap396:9.2": "buddhaseṭṭhassadāsahaṃ;",
"tha-ap396:9.3": "Sambuddho paribhuñjitvā,",
"tha-ap396:9.4": "idaṃ vacanamabravi.",
"tha-ap396:10.1": "‘Yo taṃ adāsi madhuṃ me,",
"tha-ap396:10.2": "pasanno sehi pāṇibhi;",
"tha-ap396:10.3": "Tamahaṃ kittayissāmi,",
"tha-ap396:10.4": "suṇātha mama bhāsato.",
"tha-ap396:11.1": "Iminā madhudānena,",
"tha-ap396:11.2": "tiṇasanthārakena ca;",
"tha-ap396:11.3": "Tiṃsa kappasahassāni,",
"tha-ap396:11.4": "devaloke ramissati.",
"tha-ap396:12.1": "Tiṃsa kappasahassamhi,",
"tha-ap396:12.2": "okkākakulasambhavo;",
"tha-ap396:12.3": "Gotamo nāma gottena,",
"tha-ap396:12.4": "satthā loke bhavissati.",
"tha-ap396:13.1": "Tassa dhammesu dāyādo,",
"tha-ap396:13.2": "oraso dhammanimmito;",
"tha-ap396:13.3": "Sabbāsave pariññāya,",
"tha-ap396:13.4": "nibbāyissatināsavo’.",
"tha-ap396:14.1": "Devalokā idhāgantvā,",
"tha-ap396:14.2": "mātukucchiṃ upāgate;",
"tha-ap396:14.3": "Madhuvassaṃ pavassittha,",
"tha-ap396:14.4": "chādayaṃ madhunā mahiṃ.",
"tha-ap396:15.1": "Mayi nikkhantamattamhi,",
"tha-ap396:15.2": "kucchiyā ca suduttarā;",
"tha-ap396:15.3": "Tatrāpi madhuvassaṃ me,",
"tha-ap396:15.4": "vassate niccakālikaṃ.",
"tha-ap396:16.1": "Agārā abhinikkhamma,",
"tha-ap396:16.2": "pabbajiṃ anagāriyaṃ;",
"tha-ap396:16.3": "Lābhī annassa pānassa,",
"tha-ap396:16.4": "madhudānassidaṃ phalaṃ.",
"tha-ap396:17.1": "Sabbakāmasamiddhohaṃ,",
"tha-ap396:17.2": "bhavitvā devamānuse;",
"tha-ap396:17.3": "Teneva madhudānena,",
"tha-ap396:17.4": "pattomhi āsavakkhayaṃ.",
"tha-ap396:18.1": "Vuṭṭhamhi deve caturaṅgule tiṇe,",
"tha-ap396:18.2": "Sampupphite dharaṇīruhe sañchanne;",
"tha-ap396:18.3": "Suññe ghare maṇḍaparukkhamūlake,",
"tha-ap396:18.4": "Vasāmi niccaṃ sukhito anāsavo.",
"tha-ap396:19.1": "Majjhe mahante hīne ca,",
"tha-ap396:19.2": "bhave sabbe atikkamiṃ;",
"tha-ap396:19.3": "Ajja me āsavā khīṇā,",
"tha-ap396:19.4": "natthi dāni punabbhavo.",
"tha-ap396:20.1": "Tiṃsakappasahassamhi,",
"tha-ap396:20.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap396:20.3": "Duggatiṃ nābhijānāmi,",
"tha-ap396:20.4": "madhudānassidaṃ phalaṃ.",
"tha-ap396:21.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap396:21.2": "bhavā sabbe samūhatā;",
"tha-ap396:21.3": "Sabbāsavā parikkhīṇā,",
"tha-ap396:21.4": "natthi dāni punabbhavo.",
"tha-ap396:22.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap396:22.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap396:23.1": "Paṭisambhidā catasso, … pe …",
"tha-ap396:23.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap396:24.1": "Itthaṃ sudaṃ āyasmā madhudāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap396:25.1": "Madhudāyakattherassāpadānaṃ catutthaṃ."
}