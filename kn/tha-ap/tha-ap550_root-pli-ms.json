{
"tha-ap550:1.1": "Therāpadāna",
"tha-ap550:2.1": "Bhaddiyavagga",
"tha-ap550:3.1": "8 Lomasakaṅgiyattheraapadāna",
"tha-ap550:4.1": "“Imamhi bhaddake kappe,",
"tha-ap550:4.2": "brahmabandhu mahāyaso;",
"tha-ap550:4.3": "Kassapo nāma gottena,",
"tha-ap550:4.4": "uppajji vadataṃ varo.",
"tha-ap550:5.1": "Tadāhaṃ candano ceva,",
"tha-ap550:5.2": "pabbajitvāna sāsane;",
"tha-ap550:5.3": "Āpāṇakoṭikaṃ dhammaṃ,",
"tha-ap550:5.4": "pūrayitvāna sāsane.",
"tha-ap550:6.1": "Tato cutā santusitaṃ,",
"tha-ap550:6.2": "upapannā ubho mayaṃ;",
"tha-ap550:6.3": "Tattha dibbehi naccehi,",
"tha-ap550:6.4": "gītehi vāditehi ca.",
"tha-ap550:7.1": "Rūpādidasahaṅgehi,",
"tha-ap550:7.2": "abhibhotvāna sesake;",
"tha-ap550:7.3": "Yāvatāyuṃ vasitvāna,",
"tha-ap550:7.4": "anubhotvā mahāsukhaṃ.",
"tha-ap550:8.1": "Tato cavitvā tidasaṃ,",
"tha-ap550:8.2": "candano upapajjatha;",
"tha-ap550:8.3": "Ahaṃ kapilavatthusmiṃ,",
"tha-ap550:8.4": "ajāyiṃ sākiyatrajo.",
"tha-ap550:9.1": "Yadā udāyittherena,",
"tha-ap550:9.2": "ajjhiṭṭho lokanāyako;",
"tha-ap550:9.3": "Anukampiya sakyānaṃ,",
"tha-ap550:9.4": "upesi kapilavhayaṃ.",
"tha-ap550:10.1": "Tadātimānino sakyā,",
"tha-ap550:10.2": "na buddhassa guṇaññuno;",
"tha-ap550:10.3": "Paṇamanti na sambuddhaṃ,",
"tha-ap550:10.4": "jātithaddhā anādarā.",
"tha-ap550:11.1": "Tesaṃ saṅkappamaññāya,",
"tha-ap550:11.2": "ākāse caṅkamī jino;",
"tha-ap550:11.3": "Pajjunno viya vassittha,",
"tha-ap550:11.4": "pajjalittha yathā sikhī.",
"tha-ap550:12.1": "Dassetvā rūpamatulaṃ,",
"tha-ap550:12.2": "puna antaradhāyatha;",
"tha-ap550:12.3": "Ekopi hutvā bahudhā,",
"tha-ap550:12.4": "ahosi punarekako.",
"tha-ap550:13.1": "Andhakāraṃ pakāsañca,",
"tha-ap550:13.2": "dassayitvā anekadhā;",
"tha-ap550:13.3": "Pāṭiheraṃ karitvāna,",
"tha-ap550:13.4": "vinayī ñātake muni.",
"tha-ap550:14.1": "Cātuddīpo mahāmegho,",
"tha-ap550:14.2": "tāvadeva pavassatha;",
"tha-ap550:14.3": "Tadā hi jātakaṃ buddho,",
"tha-ap550:14.4": "vessantaramadesayi.",
"tha-ap550:15.1": "Tadā te khattiyā sabbe,",
"tha-ap550:15.2": "nihantvā jātijaṃ madaṃ;",
"tha-ap550:15.3": "Upesuṃ saraṇaṃ buddhaṃ,",
"tha-ap550:15.4": "āha suddhodano tadā.",
"tha-ap550:16.1": "‘Idaṃ tatiyaṃ tava bhūripañña,",
"tha-ap550:16.2": "Pādāni vandāmi samantacakkhu;",
"tha-ap550:16.3": "Yadābhijāto pathavī pakampayī,",
"tha-ap550:16.4": "Yadā ca taṃ najjahi jambuchāyā’.",
"tha-ap550:17.1": "Tadā buddhānubhāvaṃ taṃ,",
"tha-ap550:17.2": "disvā vimhitamānaso;",
"tha-ap550:17.3": "Pabbajitvāna tattheva,",
"tha-ap550:17.4": "nivasiṃ mātupūjako.",
"tha-ap550:18.1": "Candano devaputto maṃ,",
"tha-ap550:18.2": "upagantvānupucchatha;",
"tha-ap550:18.3": "Bhaddekarattassa tadā,",
"tha-ap550:18.4": "saṅkhepavitthāraṃ nayaṃ.",
"tha-ap550:19.1": "Coditohaṃ tadā tena,",
"tha-ap550:19.2": "upecca naranāyakaṃ;",
"tha-ap550:19.3": "Bhaddekarattaṃ sutvāna,",
"tha-ap550:19.4": "saṃviggo vanamāmako.",
"tha-ap550:20.1": "Tadā mātaramapucchiṃ,",
"tha-ap550:20.2": "‘vane vacchāmi ekako’;",
"tha-ap550:20.3": "‘Sukhumālo’ti me mātā,",
"tha-ap550:20.4": "vārayī taṃ tadā vacaṃ.",
"tha-ap550:21.1": "‘Kāsaṃ kusaṃ poṭakilaṃ,",
"tha-ap550:21.2": "usīraṃ muñjapabbajaṃ;",
"tha-ap550:21.3": "Urasā panudissāmi,",
"tha-ap550:21.4": "vivekamanubrūhayaṃ’.",
"tha-ap550:22.1": "Tadā vanaṃ paviṭṭhohaṃ,",
"tha-ap550:22.2": "saritvā jinasāsanaṃ;",
"tha-ap550:22.3": "Bhaddekarattaovādaṃ,",
"tha-ap550:22.4": "arahattamapāpuṇiṃ.",
"tha-ap550:23.1": "‘Atītaṃ nānvāgameyya,",
"tha-ap550:23.2": "nappaṭikaṅkhe anāgataṃ;",
"tha-ap550:23.3": "Yadatītaṃ pahīnaṃ taṃ,",
"tha-ap550:23.4": "appattañca anāgataṃ.",
"tha-ap550:24.1": "Paccuppannañca yo dhammaṃ,",
"tha-ap550:24.2": "tattha tattha vipassati;",
"tha-ap550:24.3": "Asaṃhīraṃ asaṃkuppaṃ,",
"tha-ap550:24.4": "taṃ vidvā manubrūhaye.",
"tha-ap550:25.1": "Ajjeva kiccamātappaṃ,",
"tha-ap550:25.2": "ko jaññā maraṇaṃ suve;",
"tha-ap550:25.3": "Na hi no saṅgaraṃ tena,",
"tha-ap550:25.4": "mahāsenena maccunā.",
"tha-ap550:26.1": "Evaṃvihāriṃ ātāpiṃ,",
"tha-ap550:26.2": "ahorattamatanditaṃ;",
"tha-ap550:26.3": "Taṃ ve bhaddekarattoti,",
"tha-ap550:26.4": "santo ācikkhate muni’.",
"tha-ap550:27.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap550:27.4": "viharāmi anāsavo.",
"tha-ap550:28.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap550:28.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap550:29.1": "Paṭisambhidā catasso, … pe …",
"tha-ap550:29.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap550:30.1": "Itthaṃ sudaṃ āyasmā lomasakaṅgiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap550:31.1": "Lomasakaṅgiyattherassāpadānaṃ aṭṭhamaṃ."
}