{
"tha-ap404:1.1": "Therāpadāna",
"tha-ap404:2.1": "Metteyyavagga",
"tha-ap404:3.1": "2. Puṇṇakattheraapadāna",
"tha-ap404:4.1": "“Pabbhārakūṭaṃ nissāya,",
"tha-ap404:4.2": "sayambhū aparājito;",
"tha-ap404:4.3": "Ābādhiko ca so buddho,",
"tha-ap404:4.4": "vasati pabbatantare.",
"tha-ap404:5.1": "Mama assamasāmantā,",
"tha-ap404:5.2": "panādo āsi tāvade;",
"tha-ap404:5.3": "Buddhe nibbāyamānamhi,",
"tha-ap404:5.4": "āloko udapajjatha.",
"tha-ap404:6.1": "Yāvatā vanasaṇḍasmiṃ,",
"tha-ap404:6.2": "acchakokataracchakā;",
"tha-ap404:6.3": "Vāḷā ca kesarī sabbe,",
"tha-ap404:6.4": "abhigajjiṃsu tāvade.",
"tha-ap404:7.1": "Uppātaṃ tamahaṃ disvā,",
"tha-ap404:7.2": "pabbhāraṃ agamāsahaṃ;",
"tha-ap404:7.3": "Tatthaddassāsiṃ sambuddhaṃ,",
"tha-ap404:7.4": "nibbutaṃ aparājitaṃ.",
"tha-ap404:8.1": "Suphullaṃ sālarājaṃva,",
"tha-ap404:8.2": "sataraṃsiṃva uggataṃ;",
"tha-ap404:8.3": "Vītaccikaṃva aṅgāraṃ,",
"tha-ap404:8.4": "nibbutaṃ aparājitaṃ.",
"tha-ap404:9.1": "Tiṇaṃ kaṭṭhañca pūretvā,",
"tha-ap404:9.2": "citakaṃ tatthakāsahaṃ;",
"tha-ap404:9.3": "Citakaṃ sukataṃ katvā,",
"tha-ap404:9.4": "sarīraṃ jhāpayiṃ ahaṃ.",
"tha-ap404:10.1": "Sarīraṃ jhāpayitvāna,",
"tha-ap404:10.2": "gandhatoyaṃ samokiriṃ;",
"tha-ap404:10.3": "Antalikkhe ṭhito yakkho,",
"tha-ap404:10.4": "nāmamaggahi tāvade.",
"tha-ap404:11.1": "‘Yaṃ pūritaṃ tayā kiccaṃ,",
"tha-ap404:11.2": "sayambhussa mahesino;",
"tha-ap404:11.3": "Puṇṇako nāma nāmena,",
"tha-ap404:11.4": "sadā hohi tuvaṃ mune’.",
"tha-ap404:12.1": "Tamhā kāyā cavitvāna,",
"tha-ap404:12.2": "devalokaṃ agacchahaṃ;",
"tha-ap404:12.3": "Tattha dibbamayo gandho,",
"tha-ap404:12.4": "antalikkhā pavassati.",
"tha-ap404:13.1": "Tatrāpi nāmadheyyaṃ me,",
"tha-ap404:13.2": "puṇṇakoti ahū tadā;",
"tha-ap404:13.3": "Devabhūto manusso vā,",
"tha-ap404:13.4": "saṅkappaṃ pūrayāmahaṃ.",
"tha-ap404:14.1": "Idaṃ pacchimakaṃ mayhaṃ,",
"tha-ap404:14.2": "carimo vattate bhavo;",
"tha-ap404:14.3": "Idhāpi puṇṇako nāma,",
"tha-ap404:14.4": "nāmadheyyaṃ pakāsati.",
"tha-ap404:15.1": "Tosayitvāna sambuddhaṃ,",
"tha-ap404:15.2": "gotamaṃ sakyapuṅgavaṃ;",
"tha-ap404:15.3": "Sabbāsave pariññāya,",
"tha-ap404:15.4": "viharāmi anāsavo.",
"tha-ap404:16.1": "Ekanavutito kappe,",
"tha-ap404:16.2": "yaṃ kammamakariṃ tadā;",
"tha-ap404:16.3": "Duggatiṃ nābhijānāmi,",
"tha-ap404:16.4": "tanukiccassidaṃ phalaṃ.",
"tha-ap404:17.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap404:17.4": "viharāmi anāsavo.",
"tha-ap404:18.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap404:18.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap404:19.1": "Paṭisambhidā catasso, … pe …",
"tha-ap404:19.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap404:20.1": "Itthaṃ sudaṃ āyasmā puṇṇako thero imā gāthāyo abhāsitthāti.",
"tha-ap404:21.1": "Puṇṇakattherassāpadānaṃ dutiyaṃ."
}