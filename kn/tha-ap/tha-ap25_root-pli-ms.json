{
"tha-ap25:1.1": "Therāpadāna",
"tha-ap25:2.1": "Subhūtivagga",
"tha-ap25:3.1": "3 Tisaraṇagamaniyattheraapadāna",
"tha-ap25:4.1": "“Nagare candavatiyā,",
"tha-ap25:4.2": "mātuupaṭṭhāko ahuṃ;",
"tha-ap25:4.3": "Andhā mātā pitā mayhaṃ,",
"tha-ap25:4.4": "te posemi ahaṃ tadā.",
"tha-ap25:5.1": "Rahogato nisīditvā,",
"tha-ap25:5.2": "evaṃ cintesahaṃ tadā;",
"tha-ap25:5.3": "Posento mātāpitaro,",
"tha-ap25:5.4": "pabbajjaṃ na labhāmahaṃ.",
"tha-ap25:6.1": "Mahandhakārapihitā,",
"tha-ap25:6.2": "tividhaggīhi ḍayhare;",
"tha-ap25:6.3": "Etādise bhave jāte,",
"tha-ap25:6.4": "natthi koci vināyako.",
"tha-ap25:7.1": "Buddho loke samuppanno,",
"tha-ap25:7.2": "dippati dāni sāsanaṃ;",
"tha-ap25:7.3": "Sakkā uddharituṃ attā,",
"tha-ap25:7.4": "puññakāmena jantunā.",
"tha-ap25:8.1": "Uggayha tīṇi saraṇe,",
"tha-ap25:8.2": "paripuṇṇāni gopayiṃ;",
"tha-ap25:8.3": "Tena kammena sukatena,",
"tha-ap25:8.4": "paṭimokkhāmi duggatiṃ.",
"tha-ap25:9.1": "Nisabho nāma samaṇo,",
"tha-ap25:9.2": "buddhassa aggasāvako;",
"tha-ap25:9.3": "Tamahaṃ upagantvāna,",
"tha-ap25:9.4": "saraṇagamanaṃ gahiṃ.",
"tha-ap25:10.1": "Vassasatasahassāni,",
"tha-ap25:10.2": "āyu vijjati tāvade;",
"tha-ap25:10.3": "Tāvatā saraṇagamanaṃ,",
"tha-ap25:10.4": "paripuṇṇaṃ agopayiṃ.",
"tha-ap25:11.1": "Carime vattamānamhi,",
"tha-ap25:11.2": "saraṇaṃ taṃ anussariṃ;",
"tha-ap25:11.3": "Tena kammena sukatena,",
"tha-ap25:11.4": "tāvatiṃsaṃ agacchahaṃ.",
"tha-ap25:12.1": "Devalokagato santo,",
"tha-ap25:12.2": "puññakammasamāhito;",
"tha-ap25:12.3": "Yaṃ desaṃ upapajjāmi,",
"tha-ap25:12.4": "aṭṭha hetū labhāmahaṃ.",
"tha-ap25:13.1": "Disāsu pūjito homi,",
"tha-ap25:13.2": "tikkhapañño bhavāmahaṃ;",
"tha-ap25:13.3": "Sabbe devānuvattanti,",
"tha-ap25:13.4": "amitabhogaṃ labhāmahaṃ.",
"tha-ap25:14.1": "Suvaṇṇavaṇṇo sabbattha,",
"tha-ap25:14.2": "paṭikanto bhavāmahaṃ;",
"tha-ap25:14.3": "Mittānaṃ acalo homi,",
"tha-ap25:14.4": "yaso abbhuggato mamaṃ.",
"tha-ap25:15.1": "Asītikkhattu devindo,",
"tha-ap25:15.2": "devarajjamakārayiṃ;",
"tha-ap25:15.3": "Dibbasukhaṃ anubhaviṃ,",
"tha-ap25:15.4": "accharāhi purakkhato.",
"tha-ap25:16.1": "Pañcasattatikkhattuñca,",
"tha-ap25:16.2": "cakkavattī ahosahaṃ;",
"tha-ap25:16.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap25:16.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap25:17.1": "Pacchime bhave sampatte,",
"tha-ap25:17.2": "puññakammasamāhito;",
"tha-ap25:17.3": "Pure sāvatthiyaṃ jāto,",
"tha-ap25:17.4": "mahāsāle suaḍḍhake.",
"tha-ap25:18.1": "Nagarā nikkhamitvāna,",
"tha-ap25:18.2": "dārakehi purakkhato;",
"tha-ap25:18.3": "Hasakhiḍḍasamaṅgīhaṃ,",
"tha-ap25:18.4": "saṃghārāmaṃ upāgamiṃ.",
"tha-ap25:19.1": "Tatthaddasāsiṃ samaṇaṃ,",
"tha-ap25:19.2": "vippamuttaṃ nirūpadhiṃ;",
"tha-ap25:19.3": "So me dhammamadesesi,",
"tha-ap25:19.4": "saraṇañca adāsi me.",
"tha-ap25:20.1": "Sohaṃ sutvāna saraṇaṃ,",
"tha-ap25:20.2": "saraṇaṃ me anussariṃ;",
"tha-ap25:20.3": "Ekāsane nisīditvā,",
"tha-ap25:20.4": "arahattamapāpuṇiṃ.",
"tha-ap25:21.1": "Jātiyā sattame vasse,",
"tha-ap25:21.2": "arahattamapāpuṇiṃ;",
"tha-ap25:21.3": "Upasampādayi buddho,",
"tha-ap25:21.4": "guṇamaññāya cakkhumā.",
"tha-ap25:22.1": "Aparimeyye ito kappe,",
"tha-ap25:22.2": "saraṇāni agacchahaṃ;",
"tha-ap25:22.3": "Tato me sukataṃ kammaṃ,",
"tha-ap25:22.4": "phalaṃ dassesi me idha.",
"tha-ap25:23.1": "Sugopitaṃ me saraṇaṃ,",
"tha-ap25:23.2": "mānasaṃ suppaṇīhitaṃ;",
"tha-ap25:23.3": "Anubhotvā yasaṃ sabbaṃ,",
"tha-ap25:23.4": "pattomhi acalaṃ padaṃ.",
"tha-ap25:24.1": "Yesaṃ sotāvadhānatthi,",
"tha-ap25:24.2": "suṇotha mama bhāsato;",
"tha-ap25:24.3": "Ahaṃ vo kathayissāmi,",
"tha-ap25:24.4": "sāmaṃ diṭṭhaṃ padaṃ mama.",
"tha-ap25:25.1": "‘Buddho loke samuppanno,",
"tha-ap25:25.2": "vattate jinasāsanaṃ;",
"tha-ap25:25.3": "Amatā vāditā bherī,",
"tha-ap25:25.4": "sokasallavinodanā.",
"tha-ap25:26.1": "Yathāsakena thāmena,",
"tha-ap25:26.2": "puññakkhette anuttare;",
"tha-ap25:26.3": "Adhikāraṃ kareyyātha,",
"tha-ap25:26.4": "passayissatha nibbutiṃ.",
"tha-ap25:27.1": "Paggayha tīṇi saraṇe,",
"tha-ap25:27.2": "pañcasīlāni gopiya;",
"tha-ap25:27.3": "Buddhe cittaṃ pasādetvā,",
"tha-ap25:27.4": "dukkhassantaṃ karissatha.",
"tha-ap25:28.1": "Sammā dhammaṃ bhāvetvāna,",
"tha-ap25:28.2": "Sīlāni parigopiya;",
"tha-ap25:28.3": "Aciraṃ arahattaṃ vo,",
"tha-ap25:28.4": "Sabbepi pāpuṇissatha.",
"tha-ap25:29.1": "Tevijjo iddhipattomhi,",
"tha-ap25:29.2": "cetopariyakovido;",
"tha-ap25:29.3": "Sāvako te mahāvīra,",
"tha-ap25:29.4": "saraṇo vandati satthuno’.",
"tha-ap25:30.1": "Aparimeyye ito kappe,",
"tha-ap25:30.2": "saraṇaṃ buddhassa gacchahaṃ;",
"tha-ap25:30.3": "Duggatiṃ nābhijānāmi,",
"tha-ap25:30.4": "saraṇaṃ gamane phalaṃ.",
"tha-ap25:31.1": "Paṭisambhidā catasso,",
"tha-ap25:31.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap25:31.3": "Chaḷabhiññā sacchikatā,",
"tha-ap25:31.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap25:32.1": "Itthaṃ sudaṃ āyasmā tisaraṇagamaniyo thero imā gāthāyo abhāsitthāti.",
"tha-ap25:33.1": "Tisaraṇagamaniyattherassāpadānaṃ tatiyaṃ."
}