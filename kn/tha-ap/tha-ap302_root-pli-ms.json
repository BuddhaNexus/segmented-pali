{
"tha-ap302:1.1": "Therāpadāna",
"tha-ap302:2.1": "Citakapūjakavagga",
"tha-ap302:3.1": "10. Anusaṃsāvakattheraapadāna",
"tha-ap302:4.1": "“Piṇḍāya caramānāhaṃ,",
"tha-ap302:4.2": "vipassimaddasaṃ jinaṃ;",
"tha-ap302:4.3": "Uḷuṅgabhikkhaṃ pādāsiṃ,",
"tha-ap302:4.4": "dvipadindassa tādino.",
"tha-ap302:5.1": "Pasannacitto sumano,",
"tha-ap302:5.2": "abhivādesahaṃ tadā;",
"tha-ap302:5.3": "Anusaṃsāvayiṃ buddhaṃ,",
"tha-ap302:5.4": "uttamatthassa pattiyā.",
"tha-ap302:6.1": "Ekanavutito kappe,",
"tha-ap302:6.2": "anusaṃsāvayiṃ ahaṃ;",
"tha-ap302:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap302:6.4": "anusaṃsāvanā phalaṃ.",
"tha-ap302:7.1": "Paṭisambhidā catasso, … pe …",
"tha-ap302:7.4": "kataṃ buddhassa sāsanaṃ”. #2712",
"tha-ap302:8.1": "Itthaṃ sudaṃ āyasmā anusaṃsāvako thero imā gāthāyo abhāsitthāti.",
"tha-ap302:9.1": "Anusaṃsāvakattherassāpadānaṃ dasamaṃ.",
"tha-ap302:10.1": "Citakapūjakavaggo tiṃsatimo.",
"tha-ap302:11.1": "Tassuddānaṃ",
"tha-ap302:12.1": "Citakaṃ pārichatto ca,",
"tha-ap302:12.2": "saddagosīsasantharaṃ;",
"tha-ap302:12.3": "Pādo padesaṃ saraṇaṃ,",
"tha-ap302:12.4": "ambo saṃsāvakopi ca;",
"tha-ap302:12.5": "Aṭṭhatālīsa gāthāyo,",
"tha-ap302:12.6": "gaṇitāyo vibhāvibhi.",
"tha-ap302:13.1": "Atha vagguddānaṃ",
"tha-ap302:14.1": "Kaṇikāro hatthidado,",
"tha-ap302:14.2": "ālambaṇudakāsanaṃ;",
"tha-ap302:14.3": "Tuvaraṃ thomako ceva,",
"tha-ap302:14.4": "ukkhepaṃ sīsupadhānaṃ.",
"tha-ap302:15.1": "Paṇṇado citapūjī ca,",
"tha-ap302:15.2": "gāthāyo ceva sabbaso;",
"tha-ap302:15.3": "Cattāri ca satānīha,",
"tha-ap302:15.4": "ekapaññāsameva ca.",
"tha-ap302:16.1": "Pañcavīsasatā sabbā,",
"tha-ap302:16.2": "dvāsattati taduttari;",
"tha-ap302:16.3": "Tisataṃ apadānānaṃ,",
"tha-ap302:16.4": "gaṇitā atthadassibhi.",
"tha-ap302:17.1": "Kaṇikāravaggadasakaṃ.",
"tha-ap302:18.1": "Tatiyasatakaṃ samattaṃ."
}