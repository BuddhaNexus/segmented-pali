{
"tha-ap547:1.1": "Therāpadāna",
"tha-ap547:2.1": "Bhaddiyavagga",
"tha-ap547:3.1": "5. Nandakattheraapadāna",
"tha-ap547:4.1": "“Padumuttaro nāma jino,",
"tha-ap547:4.2": "sabbadhammesu cakkhumā;",
"tha-ap547:4.3": "Ito satasahassamhi,",
"tha-ap547:4.4": "kappe uppajji nāyako.",
"tha-ap547:5.1": "Hitāya sabbasattānaṃ,",
"tha-ap547:5.2": "sukhāya vadataṃ varo;",
"tha-ap547:5.3": "Atthāya purisājañño,",
"tha-ap547:5.4": "paṭipanno sadevake.",
"tha-ap547:6.1": "Yasaggapatto sirimā,",
"tha-ap547:6.2": "kittivaṇṇabhato jino;",
"tha-ap547:6.3": "Pūjito sabbalokassa,",
"tha-ap547:6.4": "disā sabbāsu vissuto.",
"tha-ap547:7.1": "Uttiṇṇavicikiccho so,",
"tha-ap547:7.2": "vītivattakathaṃkatho;",
"tha-ap547:7.3": "Paripuṇṇamanasaṅkappo,",
"tha-ap547:7.4": "patto sambodhimuttamaṃ.",
"tha-ap547:8.1": "Anuppannassa maggassa,",
"tha-ap547:8.2": "uppādetā naruttamo;",
"tha-ap547:8.3": "Anakkhātañca akkhāsi,",
"tha-ap547:8.4": "asañjātañca sañjanī.",
"tha-ap547:9.1": "Maggaññū maggavidū ca,",
"tha-ap547:9.2": "maggakkhāyī narāsabho;",
"tha-ap547:9.3": "Maggassa kusalo satthā,",
"tha-ap547:9.4": "sārathīnaṃ varuttamo.",
"tha-ap547:10.1": "Tadā mahākāruṇiko,",
"tha-ap547:10.2": "dhammaṃ desesi nāyako;",
"tha-ap547:10.3": "Nimugge kāmapaṅkamhi,",
"tha-ap547:10.4": "samuddharati pāṇine.",
"tha-ap547:11.1": "Bhikkhunīnaṃ ovadane,",
"tha-ap547:11.2": "sāvakaṃ seṭṭhasammataṃ;",
"tha-ap547:11.3": "Vaṇṇayaṃ etadaggamhi,",
"tha-ap547:11.4": "paññapesi mahāmuni.",
"tha-ap547:12.1": "Taṃ sutvāhaṃ pamudito,",
"tha-ap547:12.2": "nimantetvā tathāgataṃ;",
"tha-ap547:12.3": "Bhojayitvā sasaṃghaṃ taṃ,",
"tha-ap547:12.4": "patthayiṃ ṭhānamuttamaṃ.",
"tha-ap547:13.1": "Tadā pamudito nātho,",
"tha-ap547:13.2": "maṃ avoca mahāisi;",
"tha-ap547:13.3": "‘Sukhī bhavassu dīghāvu,",
"tha-ap547:13.4": "lacchase taṃ manorathaṃ.",
"tha-ap547:14.1": "Satasahassito kappe,",
"tha-ap547:14.2": "okkākakulasambhavo;",
"tha-ap547:14.3": "Gotamo nāma gottena,",
"tha-ap547:14.4": "satthā loke bhavissati.",
"tha-ap547:15.1": "Tassa dhammesu dāyādo,",
"tha-ap547:15.2": "oraso dhammanimmito;",
"tha-ap547:15.3": "Nandako nāma nāmena,",
"tha-ap547:15.4": "hessati satthu sāvako’.",
"tha-ap547:16.1": "Tena kammena sukatena,",
"tha-ap547:16.2": "cetanāpaṇidhīhi ca;",
"tha-ap547:16.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap547:16.4": "tāvatiṃsūpago ahaṃ.",
"tha-ap547:17.1": "Pacchime ca bhave dāni,",
"tha-ap547:17.2": "jāto seṭṭhikule ahaṃ;",
"tha-ap547:17.3": "Sāvatthiyaṃ pure vare,",
"tha-ap547:17.4": "iddhe phīte mahaddhane.",
"tha-ap547:18.1": "Purappavese sugataṃ,",
"tha-ap547:18.2": "disvā vimhitamānaso;",
"tha-ap547:18.3": "Jetārāmapaṭiggāhe,",
"tha-ap547:18.4": "pabbajiṃ anagāriyaṃ.",
"tha-ap547:19.1": "Nacireneva kālena,",
"tha-ap547:19.2": "arahattamapāpuṇiṃ;",
"tha-ap547:19.3": "Tatohaṃ tiṇṇasaṃsāro,",
"tha-ap547:19.4": "sāsito sabbadassinā.",
"tha-ap547:20.1": "Bhikkhunīnaṃ dhammakathaṃ,",
"tha-ap547:20.2": "paṭipucchākariṃ ahaṃ;",
"tha-ap547:20.3": "Sāsitā tā mayā sabbā,",
"tha-ap547:20.4": "abhaviṃsu anāsavā.",
"tha-ap547:21.1": "Satāni pañcanūnāni,",
"tha-ap547:21.2": "tadā tuṭṭho mahāhito;",
"tha-ap547:21.3": "Bhikkhunīnaṃ ovadataṃ,",
"tha-ap547:21.4": "aggaṭṭhāne ṭhapesi maṃ.",
"tha-ap547:22.1": "Satasahasse kataṃ kammaṃ,",
"tha-ap547:22.2": "phalaṃ dassesi me idha;",
"tha-ap547:22.3": "Sumutto saravegova,",
"tha-ap547:22.4": "kilese jhāpayiṃ mama.",
"tha-ap547:23.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap547:23.4": "viharāmi anāsavo.",
"tha-ap547:24.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap547:24.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap547:25.1": "Paṭisambhidā catasso, … pe …",
"tha-ap547:25.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap547:26.1": "Itthaṃ sudaṃ āyasmā nandako thero imā gāthāyo abhāsitthāti.",
"tha-ap547:27.1": "Nandakattherassāpadānaṃ pañcamaṃ."
}