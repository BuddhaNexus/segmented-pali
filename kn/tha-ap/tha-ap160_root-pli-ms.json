{
"tha-ap160:1.1": "Therāpadāna",
"tha-ap160:2.1": "Bandhujīvakavagga",
"tha-ap160:3.1": "8. Nāgapupphiyattheraapadāna",
"tha-ap160:4.1": "“Suvaccho nāma nāmena,",
"tha-ap160:4.2": "brāhmaṇo mantapāragū;",
"tha-ap160:4.3": "Purakkhato sasissehi,",
"tha-ap160:4.4": "vasate pabbatantare.",
"tha-ap160:5.1": "Padumuttaro nāma jino,",
"tha-ap160:5.2": "āhutīnaṃ paṭiggaho;",
"tha-ap160:5.3": "Mamuddharitukāmo so,",
"tha-ap160:5.4": "āgacchi mama santikaṃ.",
"tha-ap160:6.1": "Vehāsamhi caṅkamati,",
"tha-ap160:6.2": "dhūpāyati jalate tathā;",
"tha-ap160:6.3": "Hāsaṃ mamaṃ viditvāna,",
"tha-ap160:6.4": "pakkāmi pācināmukho.",
"tha-ap160:7.1": "Tañca acchariyaṃ disvā,",
"tha-ap160:7.2": "abbhutaṃ lomahaṃsanaṃ;",
"tha-ap160:7.3": "Nāgapupphaṃ gahetvāna,",
"tha-ap160:7.4": "gatamaggamhi okiriṃ.",
"tha-ap160:8.1": "Satasahassito kappe,",
"tha-ap160:8.2": "yaṃ pupphaṃ okiriṃ ahaṃ;",
"tha-ap160:8.3": "Tena cittappasādena,",
"tha-ap160:8.4": "duggatiṃ nupapajjahaṃ.",
"tha-ap160:9.1": "Ekattiṃse kappasate,",
"tha-ap160:9.2": "rājā āsi mahāraho;",
"tha-ap160:9.3": "Sattaratanasampanno,",
"tha-ap160:9.4": "cakkavattī mahabbalo.",
"tha-ap160:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap160:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap160:11.1": "Itthaṃ sudaṃ āyasmā nāgapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap160:12.1": "Nāgapupphiyattherassāpadānaṃ aṭṭhamaṃ."
}