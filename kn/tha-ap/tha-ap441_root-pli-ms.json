{
"tha-ap441:1.1": "Therāpadāna",
"tha-ap441:2.1": "Ekavihārivagga",
"tha-ap441:3.1": "9. Ambapiṇḍiyattheraapadāna",
"tha-ap441:4.1": "“Hatthirājā tadā āsiṃ,",
"tha-ap441:4.2": "īsādanto uruḷhavā;",
"tha-ap441:4.3": "Vicaranto brahāraññe,",
"tha-ap441:4.4": "addasaṃ lokanāyakaṃ.",
"tha-ap441:5.1": "Ambapiṇḍaṃ gahetvāna,",
"tha-ap441:5.2": "adāsiṃ satthuno ahaṃ;",
"tha-ap441:5.3": "Paṭiggaṇhi mahāvīro,",
"tha-ap441:5.4": "siddhattho lokanāyako.",
"tha-ap441:6.1": "Mama nijjhāyamānassa,",
"tha-ap441:6.2": "paribhuñji tadā jino;",
"tha-ap441:6.3": "Tattha cittaṃ pasādetvā,",
"tha-ap441:6.4": "tusitaṃ upapajjahaṃ.",
"tha-ap441:7.1": "Tato ahaṃ cavitvāna,",
"tha-ap441:7.2": "cakkavattī ahosahaṃ;",
"tha-ap441:7.3": "Eteneva upāyena,",
"tha-ap441:7.4": "anubhutvāna sampadā.",
"tha-ap441:8.1": "Padhānapahitattohaṃ,",
"tha-ap441:8.2": "upasanto nirūpadhi;",
"tha-ap441:8.3": "Sabbāsave pariññāya,",
"tha-ap441:8.4": "viharāmi anāsavo.",
"tha-ap441:9.1": "Catunnavutito kappe,",
"tha-ap441:9.2": "yaṃ phalamadadiṃ tadā;",
"tha-ap441:9.3": "Duggatiṃ nābhijānāmi,",
"tha-ap441:9.4": "phaladānassidaṃ phalaṃ.",
"tha-ap441:10.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap441:10.4": "viharāmi anāsavo.",
"tha-ap441:11.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap441:11.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap441:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap441:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap441:13.1": "Itthaṃ sudaṃ āyasmā ambapiṇḍiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap441:14.1": "Ambapiṇḍiyattherassāpadānaṃ navamaṃ."
}