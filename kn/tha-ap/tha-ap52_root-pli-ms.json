{
"tha-ap52:1.1": "Therāpadāna",
"tha-ap52:2.1": "Upālivagga",
"tha-ap52:3.1": "10. Cundattheraapadāna",
"tha-ap52:4.1": "“Siddhatthassa bhagavato,",
"tha-ap52:4.2": "lokajeṭṭhassa tādino;",
"tha-ap52:4.3": "Agghiyaṃ kārayitvāna,",
"tha-ap52:4.4": "jātipupphehi chādayiṃ.",
"tha-ap52:5.1": "Niṭṭhāpetvāna taṃ pupphaṃ,",
"tha-ap52:5.2": "buddhassa upanāmayiṃ;",
"tha-ap52:5.3": "Pupphāvasesaṃ paggayha,",
"tha-ap52:5.4": "buddhassa abhiropayiṃ.",
"tha-ap52:6.1": "Kañcanagghiyasaṅkāsaṃ,",
"tha-ap52:6.2": "buddhaṃ lokagganāyakaṃ;",
"tha-ap52:6.3": "Pasannacitto sumano,",
"tha-ap52:6.4": "pupphagghiyamupānayiṃ.",
"tha-ap52:7.1": "Vitiṇṇakaṅkho sambuddho,",
"tha-ap52:7.2": "tiṇṇoghehi purakkhato;",
"tha-ap52:7.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap52:7.4": "imā gāthā abhāsatha.",
"tha-ap52:8.1": "‘Dibbagandhaṃ pavāyantaṃ,",
"tha-ap52:8.2": "yo me pupphagghiyaṃ adā;",
"tha-ap52:8.3": "Tamahaṃ kittayissāmi,",
"tha-ap52:8.4": "suṇātha mama bhāsato.",
"tha-ap52:9.1": "Ito cuto ayaṃ poso,",
"tha-ap52:9.2": "devasaṅghapurakkhato;",
"tha-ap52:9.3": "Jātipupphehi parikiṇṇo,",
"tha-ap52:9.4": "devalokaṃ gamissati.",
"tha-ap52:10.1": "Ubbiddhaṃ bhavanaṃ tassa,",
"tha-ap52:10.2": "Sovaṇṇañca maṇīmayaṃ;",
"tha-ap52:10.3": "Byamhaṃ pātubhavissati,",
"tha-ap52:10.4": "Puññakammappabhāvitaṃ.",
"tha-ap52:11.1": "Catusattatikkhattuṃ so,",
"tha-ap52:11.2": "devarajjaṃ karissati;",
"tha-ap52:11.3": "Anubhossati sampattiṃ,",
"tha-ap52:11.4": "accharāhi purakkhato.",
"tha-ap52:12.1": "Pathabyā rajjaṃ tisataṃ,",
"tha-ap52:12.2": "vasudhaṃ āvasissati;",
"tha-ap52:12.3": "Pañcasattatikkhattuñca,",
"tha-ap52:12.4": "cakkavattī bhavissati.",
"tha-ap52:13.1": "Dujjayo nāma nāmena,",
"tha-ap52:13.2": "hessati manujādhipo;",
"tha-ap52:13.3": "Anubhotvāna taṃ puññaṃ,",
"tha-ap52:13.4": "sakakammaṃ apassito.",
"tha-ap52:14.1": "Vinipātaṃ agantvāna,",
"tha-ap52:14.2": "manussattaṃ gamissati;",
"tha-ap52:14.3": "Hiraññaṃ tassa nicitaṃ,",
"tha-ap52:14.4": "koṭisatamanappakaṃ.",
"tha-ap52:15.1": "Nibbattissati yonimhi,",
"tha-ap52:15.2": "brāhmaṇe so bhavissati;",
"tha-ap52:15.3": "Vaṅgantassa suto dhīmā,",
"tha-ap52:15.4": "sāriyā oraso piyo.",
"tha-ap52:16.1": "So ca pacchā pabbajitvā,",
"tha-ap52:16.2": "aṅgīrasassa sāsane;",
"tha-ap52:16.3": "Cūḷacundoti nāmena,",
"tha-ap52:16.4": "hessati satthu sāvako.",
"tha-ap52:17.1": "Sāmaṇerova so santo,",
"tha-ap52:17.2": "khīṇāsavo bhavissati;",
"tha-ap52:17.3": "Sabbāsave pariññāya,",
"tha-ap52:17.4": "nibbāyissatināsavo’.",
"tha-ap52:18.1": "Upaṭṭhahiṃ mahāvīraṃ,",
"tha-ap52:18.2": "aññe ca pesale bahū;",
"tha-ap52:18.3": "Bhātaraṃ me cupaṭṭhāsiṃ,",
"tha-ap52:18.4": "uttamatthassa pattiyā.",
"tha-ap52:19.1": "Bhātaraṃ me upaṭṭhitvā,",
"tha-ap52:19.2": "dhātuṃ pattamhi ohiya;",
"tha-ap52:19.3": "Sambuddhaṃ upanāmesiṃ,",
"tha-ap52:19.4": "lokajeṭṭhaṃ narāsabhaṃ.",
"tha-ap52:20.1": "Ubho hatthehi paggayha,",
"tha-ap52:20.2": "buddho loke sadevake;",
"tha-ap52:20.3": "Sandassayanto taṃ dhātuṃ,",
"tha-ap52:20.4": "kittayi aggasāvakaṃ.",
"tha-ap52:21.1": "Cittañca suvimuttaṃ me,",
"tha-ap52:21.2": "saddhā mayhaṃ patiṭṭhitā;",
"tha-ap52:21.3": "Sabbāsave pariññāya,",
"tha-ap52:21.4": "viharāmi anāsavo.",
"tha-ap52:22.1": "Paṭisambhidānuppattā,",
"tha-ap52:22.2": "Vimokkhāpi ca phassitā;",
"tha-ap52:22.3": "Chaḷabhiññā sacchikatā,",
"tha-ap52:22.4": "Kataṃ buddhassa sāsanaṃ”. #1246",
"tha-ap52:23.1": "Itthaṃ sudaṃ āyasmā cundo thero imā gāthāyo abhāsitthāti.",
"tha-ap52:24.1": "Cundattherassāpadānaṃ dasamaṃ.",
"tha-ap52:25.1": "Upālivaggo pañcamo.",
"tha-ap52:26.1": "Tassuddānaṃ",
"tha-ap52:27.1": "Upāli soṇo bhaddiyo,",
"tha-ap52:27.2": "sanniṭṭhāpakahatthiyo;",
"tha-ap52:27.3": "Chadanaṃ seyyacaṅkamaṃ,",
"tha-ap52:27.4": "subhaddo cundasavhayo;",
"tha-ap52:27.5": "Gāthāsataṃ satālīsaṃ,",
"tha-ap52:27.6": "catasso ca taduttari."
}