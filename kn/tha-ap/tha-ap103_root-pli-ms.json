{
"tha-ap103:1.1": "Therāpadāna",
"tha-ap103:2.1": "Bhikkhadāyivagga",
"tha-ap103:3.1": "1 Bhikkhadāyakattheraapadāna",
"tha-ap103:4.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
"tha-ap103:4.2": "Āhutīnaṃ paṭiggahaṃ;",
"tha-ap103:4.3": "Pavarā abhinikkhantaṃ,",
"tha-ap103:4.4": "Vanā nibbanamāgataṃ.",
"tha-ap103:5.1": "Kaṭacchubhikkhaṃ pādāsiṃ,",
"tha-ap103:5.2": "siddhatthassa mahesino;",
"tha-ap103:5.3": "Paññāya upasantassa,",
"tha-ap103:5.4": "mahāvīrassa tādino.",
"tha-ap103:6.1": "Padenānupadāyantaṃ,",
"tha-ap103:6.2": "nibbāpente mahājanaṃ;",
"tha-ap103:6.3": "Uḷārā vitti me jātā,",
"tha-ap103:6.4": "buddhe ādiccabandhune.",
"tha-ap103:7.1": "Catunnavutito kappe,",
"tha-ap103:7.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap103:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap103:7.4": "bhikkhādānassidaṃ phalaṃ.",
"tha-ap103:8.1": "Sattāsītimhito kappe,",
"tha-ap103:8.2": "mahāreṇu sanāmakā;",
"tha-ap103:8.3": "Sattaratanasampannā,",
"tha-ap103:8.4": "sattete cakkavattino.",
"tha-ap103:9.1": "Paṭisambhidā catasso,",
"tha-ap103:9.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap103:9.3": "Chaḷabhiññā sacchikatā,",
"tha-ap103:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap103:10.1": "Itthaṃ sudaṃ āyasmā bhikkhadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap103:11.1": "Bhikkhadāyakattherassāpadānaṃ paṭhamaṃ."
}