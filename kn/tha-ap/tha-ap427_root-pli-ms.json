{
"tha-ap427:1.1": "Therāpadāna",
"tha-ap427:2.1": "Sakiṃsammajjakavagga",
"tha-ap427:3.1": "5. Koraṇḍapupphiyattheraapadāna",
"tha-ap427:4.1": "“Vanakammiko pure āsiṃ,",
"tha-ap427:4.2": "pitumātumatenahaṃ;",
"tha-ap427:4.3": "Pasumārena jīvāmi,",
"tha-ap427:4.4": "kusalaṃ me na vijjati.",
"tha-ap427:5.1": "Mama āsayasāmantā,",
"tha-ap427:5.2": "tisso lokagganāyako;",
"tha-ap427:5.3": "Padāni tīṇi dassesi,",
"tha-ap427:5.4": "anukampāya cakkhumā.",
"tha-ap427:6.1": "Akkante ca pade disvā,",
"tha-ap427:6.2": "tissanāmassa satthuno;",
"tha-ap427:6.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap427:6.4": "pade cittaṃ pasādayiṃ.",
"tha-ap427:7.1": "Koraṇḍaṃ pupphitaṃ disvā,",
"tha-ap427:7.2": "pādapaṃ dharaṇīruhaṃ;",
"tha-ap427:7.3": "Sakosakaṃ gahetvāna,",
"tha-ap427:7.4": "padaseṭṭhamapūjayiṃ.",
"tha-ap427:8.1": "Tena kammena sukatena,",
"tha-ap427:8.2": "cetanāpaṇidhīhi ca;",
"tha-ap427:8.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap427:8.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap427:9.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap427:9.2": "devattaṃ atha mānusaṃ;",
"tha-ap427:9.3": "Koraṇḍavaṇṇakoyeva,",
"tha-ap427:9.4": "suppabhāso bhavāmahaṃ.",
"tha-ap427:10.1": "Dvenavute ito kappe,",
"tha-ap427:10.2": "yaṃ kammamakariṃ tadā;",
"tha-ap427:10.3": "Duggatiṃ nābhijānāmi,",
"tha-ap427:10.4": "padapūjāyidaṃ phalaṃ.",
"tha-ap427:11.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap427:11.4": "viharāmi anāsavo.",
"tha-ap427:12.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap427:12.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap427:13.1": "Paṭisambhidā catasso, … pe …",
"tha-ap427:13.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap427:14.1": "Itthaṃ sudaṃ āyasmā koraṇḍapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap427:15.1": "Koraṇḍapupphiyattherassāpadānaṃ pañcamaṃ."
}