{
"tha-ap462:1.1": "Therāpadāna",
"tha-ap462:2.1": "Jagatidāyakavagga",
"tha-ap462:3.1": "10. Gandhapūjakattheraapadāna",
"tha-ap462:4.1": "“Citāsu kurumānāsu,",
"tha-ap462:4.2": "nānāgandhe samāhaṭe;",
"tha-ap462:4.3": "Pasannacitto sumano,",
"tha-ap462:4.4": "gandhamuṭṭhimapūjayiṃ.",
"tha-ap462:5.1": "Satasahassito kappe,",
"tha-ap462:5.2": "citakaṃ yamapūjayiṃ;",
"tha-ap462:5.3": "Duggatiṃ nābhijānāmi,",
"tha-ap462:5.4": "citapūjāyidaṃ phalaṃ.",
"tha-ap462:6.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap462:6.4": "viharāmi anāsavo.",
"tha-ap462:7.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap462:7.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap462:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap462:8.4": "kataṃ buddhassa sāsanaṃ”. #4771",
"tha-ap462:9.1": "Itthaṃ sudaṃ āyasmā gandhapūjako thero imā gāthāyo abhāsitthāti.",
"tha-ap462:10.1": "Gandhapūjakattherassāpadānaṃ dasamaṃ.",
"tha-ap462:11.1": "Jagatidāyakavaggo chacattālīsamo.",
"tha-ap462:12.1": "Tassuddānaṃ",
"tha-ap462:13.1": "Jagatī morahatthī ca,",
"tha-ap462:13.2": "āsanī ukkadhārako;",
"tha-ap462:13.3": "Akkami vanakoraṇḍi,",
"tha-ap462:13.4": "chattado jātipūjako.",
"tha-ap462:14.1": "Paṭṭipupphī ca yo thero,",
"tha-ap462:14.2": "dasamo gandhapūjako;",
"tha-ap462:14.3": "Sattasaṭṭhi ca gāthāyo,",
"tha-ap462:14.4": "gaṇitāyo vibhāvibhi."
}