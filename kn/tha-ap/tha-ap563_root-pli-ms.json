{
"tha-ap563:1.1": "Therāpadāna",
"tha-ap563:2.1": "Yasavagga",
"tha-ap563:3.1": "11. Raṭṭhapālattheraapadāna",
"tha-ap563:4.1": "“Padumuttarassa bhagavato,",
"tha-ap563:4.2": "Lokajeṭṭhassa tādino;",
"tha-ap563:4.3": "Varanāgo mayā dinno,",
"tha-ap563:4.4": "Īsādanto urūḷhavā.",
"tha-ap563:5.1": "Setacchattopasobhito,",
"tha-ap563:5.2": "sakappano sahatthipo;",
"tha-ap563:5.3": "Agghāpetvāna taṃ sabbaṃ,",
"tha-ap563:5.4": "saṃghārāmaṃ akārayiṃ.",
"tha-ap563:6.1": "Catupaññāsasahassāni,",
"tha-ap563:6.2": "pāsāde kārayiṃ ahaṃ;",
"tha-ap563:6.3": "Mahoghadānaṃ karitvāna,",
"tha-ap563:6.4": "niyyādesiṃ mahesino.",
"tha-ap563:7.1": "Anumodi mahāvīro,",
"tha-ap563:7.2": "sayambhū aggapuggalo;",
"tha-ap563:7.3": "Sabbe jane hāsayanto,",
"tha-ap563:7.4": "desesi amataṃ padaṃ.",
"tha-ap563:8.1": "Taṃ me buddho viyākāsi,",
"tha-ap563:8.2": "jalajuttamanāmako;",
"tha-ap563:8.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap563:8.4": "imā gāthā abhāsatha.",
"tha-ap563:9.1": "‘Catupaññāsasahassāni,",
"tha-ap563:9.2": "pāsāde kārayī ayaṃ;",
"tha-ap563:9.3": "Kathayissāmi vipākaṃ,",
"tha-ap563:9.4": "suṇātha mama bhāsato.",
"tha-ap563:10.1": "Aṭṭhārasasahassāni,",
"tha-ap563:10.2": "kūṭāgārā bhavissare;",
"tha-ap563:10.3": "Byamhuttamamhi nibbattā,",
"tha-ap563:10.4": "sabbasoṇṇamayā ca te.",
"tha-ap563:11.1": "Paññāsakkhattuṃ devindo,",
"tha-ap563:11.2": "devarajjaṃ karissati;",
"tha-ap563:11.3": "Aṭṭhapaññāsakkhattuñca,",
"tha-ap563:11.4": "cakkavattī bhavissati.",
"tha-ap563:12.1": "Kappasatasahassamhi,",
"tha-ap563:12.2": "okkākakulasambhavo;",
"tha-ap563:12.3": "Gotamo nāma gottena,",
"tha-ap563:12.4": "satthā loke bhavissati.",
"tha-ap563:13.1": "Devalokā cavitvāna,",
"tha-ap563:13.2": "sukkamūlena codito;",
"tha-ap563:13.3": "Aḍḍhe kule mahābhoge,",
"tha-ap563:13.4": "nibbattissati tāvade.",
"tha-ap563:14.1": "So pacchā pabbajitvāna,",
"tha-ap563:14.2": "sukkamūlena codito;",
"tha-ap563:14.3": "Raṭṭhapāloti nāmena,",
"tha-ap563:14.4": "hessati satthu sāvako.",
"tha-ap563:15.1": "Padhānapahitatto so,",
"tha-ap563:15.2": "upasanto nirūpadhi;",
"tha-ap563:15.3": "Sabbāsave pariññāya,",
"tha-ap563:15.4": "nibbāyissatināsavo’.",
"tha-ap563:16.1": "Uṭṭhāya abhinikkhamma,",
"tha-ap563:16.2": "jahitā bhogasampadā;",
"tha-ap563:16.3": "Kheḷapiṇḍeva bhogamhi,",
"tha-ap563:16.4": "pemaṃ mayhaṃ na vijjati.",
"tha-ap563:17.1": "Vīriyaṃ me dhuradhorayhaṃ,",
"tha-ap563:17.2": "yogakkhemādhivāhanaṃ;",
"tha-ap563:17.3": "Dhāremi antimaṃ dehaṃ,",
"tha-ap563:17.4": "sammāsambuddhasāsane.",
"tha-ap563:18.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap563:18.4": "viharāmi anāsavo.",
"tha-ap563:19.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap563:19.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap563:20.1": "Paṭisambhidā catasso, … pe …",
"tha-ap563:20.4": "kataṃ buddhassa sāsanaṃ”. #6440",
"tha-ap563:21.1": "Itthaṃ sudaṃ āyasmā raṭṭhapālo thero imā gāthāyo abhāsitthāti.",
"tha-ap563:22.1": "Raṭṭhapālattherassāpadānaṃ ekādasamaṃ.",
"tha-ap563:23.1": "Yasavaggo chapaññāsamo.",
"tha-ap563:24.1": "Tassuddānaṃ",
"tha-ap563:25.1": "Yaso nadīkassapo ca,",
"tha-ap563:25.2": "gayākimilavajjino;",
"tha-ap563:25.3": "Duve uttarā bhaddajī,",
"tha-ap563:25.4": "sivako upavāhano;",
"tha-ap563:25.5": "Raṭṭhapālo ekasataṃ,",
"tha-ap563:25.6": "gāthānaṃ pañcanavuti.",
"tha-ap563:26.1": "Therāpadānaṃ samattaṃ."
}