{
"tha-ap223:1.1": "Therāpadāna",
"tha-ap223:2.1": "Ālambaṇadāyakavagga",
"tha-ap223:3.1": "1 Ālambaṇadāyakattheraapadāna",
"tha-ap223:4.1": "“Atthadassissa bhagavato,",
"tha-ap223:4.2": "lokajeṭṭhassa tādino;",
"tha-ap223:4.3": "Ālambaṇaṃ mayā dinnaṃ,",
"tha-ap223:4.4": "dvipadindassa tādino.",
"tha-ap223:5.1": "Dharaṇiṃ paṭipajjāmi,",
"tha-ap223:5.2": "vipulaṃ sāgarapparaṃ;",
"tha-ap223:5.3": "Pāṇesu ca issariyaṃ,",
"tha-ap223:5.4": "vattemi vasudhāya ca.",
"tha-ap223:6.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap223:6.2": "bhavā sabbe samūhatā;",
"tha-ap223:6.3": "Tisso vijjā anuppattā,",
"tha-ap223:6.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap223:7.1": "Ito dvesaṭṭhikappamhi,",
"tha-ap223:7.2": "tayo āsiṃsu khattiyā;",
"tha-ap223:7.3": "Ekāpassitanāmā te,",
"tha-ap223:7.4": "cakkavattī mahabbalā.",
"tha-ap223:8.1": "Paṭisambhidā catasso,",
"tha-ap223:8.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap223:8.3": "Chaḷabhiññā sacchikatā,",
"tha-ap223:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap223:9.1": "Itthaṃ sudaṃ āyasmā ālambaṇadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap223:10.1": "Ālambaṇadāyakattherassāpadānaṃ paṭhamaṃ."
}