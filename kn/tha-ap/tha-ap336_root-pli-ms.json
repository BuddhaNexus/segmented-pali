{
"tha-ap336:1.1": "Therāpadāna",
"tha-ap336:2.1": "Gandhodakavagga",
"tha-ap336:3.1": "4. Ekadussadāyakattheraapadāna",
"tha-ap336:4.1": "“Nagare haṃsavatiyā,",
"tha-ap336:4.2": "ahosiṃ tiṇahārako;",
"tha-ap336:4.3": "Tiṇahārena jīvāmi,",
"tha-ap336:4.4": "tena posemi dārake.",
"tha-ap336:5.1": "Padumuttaro nāma jino,",
"tha-ap336:5.2": "sabbadhammāna pāragū;",
"tha-ap336:5.3": "Tamandhakāraṃ nāsetvā,",
"tha-ap336:5.4": "uppajji lokanāyako.",
"tha-ap336:6.1": "Sake ghare nisīditvā,",
"tha-ap336:6.2": "evaṃ cintesahaṃ tadā;",
"tha-ap336:6.3": "‘Buddho loke samuppanno,",
"tha-ap336:6.4": "deyyadhammo ca natthi me.",
"tha-ap336:7.1": "Idaṃ me sāṭakaṃ ekaṃ,",
"tha-ap336:7.2": "natthi me koci dāyako;",
"tha-ap336:7.3": "Dukkho nirayasamphasso,",
"tha-ap336:7.4": "ropayissāmi dakkhiṇaṃ’.",
"tha-ap336:8.1": "Evāhaṃ cintayitvāna,",
"tha-ap336:8.2": "sakaṃ cittaṃ pasādayiṃ;",
"tha-ap336:8.3": "Ekaṃ dussaṃ gahetvāna,",
"tha-ap336:8.4": "buddhaseṭṭhassadāsahaṃ.",
"tha-ap336:9.1": "Ekaṃ dussaṃ daditvāna,",
"tha-ap336:9.2": "ukkuṭṭhiṃ sampavattayiṃ;",
"tha-ap336:9.3": "Yadi buddho tuvaṃ vīra,",
"tha-ap336:9.4": "tārehi maṃ mahāmuni.",
"tha-ap336:10.1": "Padumuttaro lokavidū,",
"tha-ap336:10.2": "āhutīnaṃ paṭiggaho;",
"tha-ap336:10.3": "Mama dānaṃ pakittento,",
"tha-ap336:10.4": "akā me anumodanaṃ.",
"tha-ap336:11.1": "‘Iminā ekadussena,",
"tha-ap336:11.2": "cetanāpaṇidhīhi ca;",
"tha-ap336:11.3": "Kappasatasahassāni,",
"tha-ap336:11.4": "vinipātaṃ na gacchati.",
"tha-ap336:12.1": "Chattiṃsakkhattuṃ devindo,",
"tha-ap336:12.2": "devarajjaṃ karissati;",
"tha-ap336:12.3": "Tettiṃsakkhattuṃ rājā ca,",
"tha-ap336:12.4": "cakkavattī bhavissati;",
"tha-ap336:12.5": "Padesarajjaṃ vipulaṃ,",
"tha-ap336:12.6": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap336:13.1": "Devaloke manusse vā,",
"tha-ap336:13.2": "saṃsaranto tuvaṃ bhave;",
"tha-ap336:13.3": "Rūpavā guṇasampanno,",
"tha-ap336:13.4": "anavakkantadehavā;",
"tha-ap336:13.5": "Akkhobhaṃ amitaṃ dussaṃ,",
"tha-ap336:13.6": "labhissati yadicchakaṃ’.",
"tha-ap336:14.1": "Idaṃ vatvāna sambuddho,",
"tha-ap336:14.2": "jalajuttamanāmako;",
"tha-ap336:14.3": "Nabhaṃ abbhuggamī dhīro,",
"tha-ap336:14.4": "haṃsarājāva ambare.",
"tha-ap336:15.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap336:15.2": "devattaṃ atha mānusaṃ;",
"tha-ap336:15.3": "Bhoge me ūnatā natthi,",
"tha-ap336:15.4": "ekadussassidaṃ phalaṃ.",
"tha-ap336:16.1": "Paduddhāre paduddhāre,",
"tha-ap336:16.2": "dussaṃ nibbattate mamaṃ;",
"tha-ap336:16.3": "Heṭṭhā dussamhi tiṭṭhāmi,",
"tha-ap336:16.4": "upari chadanaṃ mama.",
"tha-ap336:17.1": "Cakkavāḷamupādāya,",
"tha-ap336:17.2": "sakānanaṃ sapabbataṃ;",
"tha-ap336:17.3": "Icchamāno cahaṃ ajja,",
"tha-ap336:17.4": "dussehi chādayeyyahaṃ.",
"tha-ap336:18.1": "Teneva ekadussena,",
"tha-ap336:18.2": "saṃsaranto bhavābhave;",
"tha-ap336:18.3": "Suvaṇṇavaṇṇo hutvāna,",
"tha-ap336:18.4": "saṃsarāmi bhavābhave.",
"tha-ap336:19.1": "Vipākaṃ ekadussassa,",
"tha-ap336:19.2": "najjhagaṃ katthacikkhayaṃ;",
"tha-ap336:19.3": "Ayaṃ me antimā jāti,",
"tha-ap336:19.4": "vipaccati idhāpi me.",
"tha-ap336:20.1": "Satasahassito kappe,",
"tha-ap336:20.2": "yaṃ dussamadadiṃ tadā;",
"tha-ap336:20.3": "Duggatiṃ nābhijānāmi,",
"tha-ap336:20.4": "ekadussassidaṃ phalaṃ.",
"tha-ap336:21.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap336:21.2": "bhavā sabbe samūhatā;",
"tha-ap336:21.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap336:21.4": "viharāmi anāsavo.",
"tha-ap336:22.1": "Paṭisambhidā catasso, … pe …",
"tha-ap336:22.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap336:23.1": "Itthaṃ sudaṃ āyasmā ekadussadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap336:24.1": "Ekadussadāyakattherassāpadānaṃ catutthaṃ."
}