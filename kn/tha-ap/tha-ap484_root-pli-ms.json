{
"tha-ap484:1.1": "Therāpadāna",
"tha-ap484:2.1": "Paṃsukūlavagga",
"tha-ap484:3.1": "2. Buddhasaññakattheraapadāna",
"tha-ap484:4.1": "“Ajjhāyako mantadharo,",
"tha-ap484:4.2": "tiṇṇaṃ vedāna pāragū;",
"tha-ap484:4.3": "Lakkhaṇe itihāse ca,",
"tha-ap484:4.4": "sanighaṇḍusakeṭubhe.",
"tha-ap484:5.1": "Nadīsotapaṭibhāgā,",
"tha-ap484:5.2": "sissā āyanti me tadā;",
"tha-ap484:5.3": "Tesāhaṃ mante vācemi,",
"tha-ap484:5.4": "rattindivamatandito.",
"tha-ap484:6.1": "Siddhattho nāma sambuddho,",
"tha-ap484:6.2": "loke uppajji tāvade;",
"tha-ap484:6.3": "Tamandhakāraṃ nāsetvā,",
"tha-ap484:6.4": "ñāṇālokaṃ pavattayi.",
"tha-ap484:7.1": "Mama aññataro sisso,",
"tha-ap484:7.2": "sissānaṃ so kathesi me;",
"tha-ap484:7.3": "Sutvāna te etamatthaṃ,",
"tha-ap484:7.4": "ārocesuṃ mamaṃ tadā.",
"tha-ap484:8.1": "‘Buddho loke samuppanno,",
"tha-ap484:8.2": "sabbaññū lokanāyako;",
"tha-ap484:8.3": "Tassānuvattati jano,",
"tha-ap484:8.4": "lābho amhaṃ na vijjati.",
"tha-ap484:9.1": "Adhiccuppattikā buddhā,",
"tha-ap484:9.2": "cakkhumanto mahāyasā;",
"tha-ap484:9.3": "Yannūnāhaṃ buddhaseṭṭhaṃ,",
"tha-ap484:9.4": "passeyyaṃ lokanāyakaṃ’.",
"tha-ap484:10.1": "Ajinaṃ me gahetvāna,",
"tha-ap484:10.2": "vākacīraṃ kamaṇḍaluṃ;",
"tha-ap484:10.3": "Assamā abhinikkhamma,",
"tha-ap484:10.4": "sisse āmantayiṃ ahaṃ.",
"tha-ap484:11.1": "Odumbarikapupphaṃva,",
"tha-ap484:11.2": "candamhi sasakaṃ yathā;",
"tha-ap484:11.3": "Vāyasānaṃ yathā khīraṃ,",
"tha-ap484:11.4": "dullabho lokanāyako.",
"tha-ap484:12.1": "Buddho lokamhi uppanno,",
"tha-ap484:12.2": "manussattampi dullabhaṃ;",
"tha-ap484:12.3": "Ubhosu vijjamānesu,",
"tha-ap484:12.4": "savanañca sudullabhaṃ.",
"tha-ap484:13.1": "Buddho loke samuppanno,",
"tha-ap484:13.2": "cakkhuṃ lacchāma no bhavaṃ;",
"tha-ap484:13.3": "Etha sabbe gamissāma,",
"tha-ap484:13.4": "sammāsambuddhasantikaṃ.",
"tha-ap484:14.1": "Kamaṇḍaludharā sabbe,",
"tha-ap484:14.2": "kharājinanivāsino;",
"tha-ap484:14.3": "Te jaṭā bhārabharitā,",
"tha-ap484:14.4": "nikkhamuṃ vipinā tadā.",
"tha-ap484:15.1": "Yugamattaṃ pekkhamānā,",
"tha-ap484:15.2": "uttamatthaṃ gavesino;",
"tha-ap484:15.3": "Āsattidosarahitā,",
"tha-ap484:15.4": "asambhītāva kesarī.",
"tha-ap484:16.1": "Appakiccā aloluppā,",
"tha-ap484:16.2": "nipakā santavuttino;",
"tha-ap484:16.3": "Uñchāya caramānā te,",
"tha-ap484:16.4": "buddhaseṭṭhamupāgamuṃ.",
"tha-ap484:17.1": "Diyaḍḍhayojane sese,",
"tha-ap484:17.2": "byādhi me upapajjatha;",
"tha-ap484:17.3": "Buddhaseṭṭhaṃ saritvāna,",
"tha-ap484:17.4": "tattha kālaṅkato ahaṃ.",
"tha-ap484:18.1": "Catunnavutito kappe,",
"tha-ap484:18.2": "yaṃ saññamalabhiṃ tadā;",
"tha-ap484:18.3": "Duggatiṃ nābhijānāmi,",
"tha-ap484:18.4": "buddhasaññāyidaṃ phalaṃ.",
"tha-ap484:19.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap484:19.4": "viharāmi anāsavo.",
"tha-ap484:20.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap484:20.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap484:21.1": "Paṭisambhidā catasso, … pe …",
"tha-ap484:21.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap484:22.1": "Itthaṃ sudaṃ āyasmā buddhasaññako thero imā gāthāyo abhāsitthāti.",
"tha-ap484:23.1": "Buddhasaññakattherassāpadānaṃ dutiyaṃ."
}