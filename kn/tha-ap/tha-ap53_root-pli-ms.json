{
"tha-ap53:1.1": "Therāpadāna",
"tha-ap53:2.1": "Bījanivagga",
"tha-ap53:3.1": "1. Vidhūpanadāyakattheraapadāna",
"tha-ap53:4.1": "“Padumuttarabuddhassa,",
"tha-ap53:4.2": "lokajeṭṭhassa tādino;",
"tha-ap53:4.3": "Bījanikā mayā dinnā,",
"tha-ap53:4.4": "dvipadindassa tādino.",
"tha-ap53:5.1": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap53:5.2": "paggahetvāna añjaliṃ;",
"tha-ap53:5.3": "Sambuddhamabhivādetvā,",
"tha-ap53:5.4": "pakkamiṃ uttarāmukho.",
"tha-ap53:6.1": "Bījaniṃ paggahetvāna,",
"tha-ap53:6.2": "satthā lokagganāyako;",
"tha-ap53:6.3": "Bhikkhusaṃghe ṭhito santo,",
"tha-ap53:6.4": "imā gāthā abhāsatha.",
"tha-ap53:7.1": "‘Iminā bījanidānena,",
"tha-ap53:7.2": "cittassa paṇidhīhi ca;",
"tha-ap53:7.3": "Kappānaṃ satasahassaṃ,",
"tha-ap53:7.4": "vinipātaṃ na gacchati’.",
"tha-ap53:8.1": "Āraddhavīriyo pahitatto,",
"tha-ap53:8.2": "Cetoguṇasamāhito;",
"tha-ap53:8.3": "Jātiyā sattavassohaṃ,",
"tha-ap53:8.4": "Arahattaṃ apāpuṇiṃ.",
"tha-ap53:9.1": "Saṭṭhikappasahassamhi,",
"tha-ap53:9.2": "bījamānasanāmakā;",
"tha-ap53:9.3": "Soḷasāsiṃsu rājāno,",
"tha-ap53:9.4": "cakkavattī mahabbalā.",
"tha-ap53:10.1": "Paṭisambhidā catasso,",
"tha-ap53:10.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap53:10.3": "Chaḷabhiññā sacchikatā,",
"tha-ap53:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap53:11.1": "Itthaṃ sudaṃ āyasmā vidhūpanadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap53:12.1": "Vidhūpanadāyakattherassāpadānaṃ paṭhamaṃ."
}