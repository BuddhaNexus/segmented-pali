{
"tha-ap92:1.1": "Therāpadāna",
"tha-ap92:2.1": "Timiravagga",
"tha-ap92:3.1": "10. Padumapupphiyattheraapadāna",
"tha-ap92:4.1": "“Pokkharavanaṃ paviṭṭho,",
"tha-ap92:4.2": "Bhañjanto padumānihaṃ;",
"tha-ap92:4.3": "Tatthaddasaṃ phussaṃ buddhaṃ,",
"tha-ap92:4.4": "Bāttiṃsavaralakkhaṇaṃ.",
"tha-ap92:5.1": "Padumapupphaṃ gahetvāna,",
"tha-ap92:5.2": "ākāse ukkhipiṃ ahaṃ;",
"tha-ap92:5.3": "Pāpakammaṃ saritvāna,",
"tha-ap92:5.4": "pabbajiṃ anagāriyaṃ.",
"tha-ap92:6.1": "Pabbajitvāna kāyena,",
"tha-ap92:6.2": "manasā saṃvutena ca;",
"tha-ap92:6.3": "Vacīduccaritaṃ hitvā,",
"tha-ap92:6.4": "ājīvaṃ parisodhayiṃ.",
"tha-ap92:7.1": "Dvenavute ito kappe,",
"tha-ap92:7.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap92:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap92:7.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap92:8.1": "Padumābhāsanāmā ca,",
"tha-ap92:8.2": "aṭṭhārasa mahīpatī;",
"tha-ap92:8.3": "Aṭṭhārasesu kappesu,",
"tha-ap92:8.4": "aṭṭhatālīsamāsisuṃ.",
"tha-ap92:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap92:9.4": "kataṃ buddhassa sāsanaṃ”. #1542",
"tha-ap92:10.1": "Itthaṃ sudaṃ āyasmā padumapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap92:11.1": "Padumapupphiyattherassāpadānaṃ dasamaṃ.",
"tha-ap92:12.1": "Timiravaggo navamo.",
"tha-ap92:13.1": "Tassuddānaṃ",
"tha-ap92:14.1": "Timiranaṅgalīpuppha,",
"tha-ap92:14.2": "nippannañjaliko adho;",
"tha-ap92:14.3": "Dve raṃsisaññī phalado,",
"tha-ap92:14.4": "saddasaññī ca secako;",
"tha-ap92:14.5": "Padmapupphī ca gāthāyo,",
"tha-ap92:14.6": "chappaññāsa pakittitā."
}