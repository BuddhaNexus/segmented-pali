{
"tha-ap193:1.1": "Therāpadāna",
"tha-ap193:2.1": "Tamālapupphiyavagga",
"tha-ap193:3.1": "1. Tamālapupphiyattheraapadāna",
"tha-ap193:4.1": "“Cullāsītisahassāni,",
"tha-ap193:4.2": "thambhā sovaṇṇayā ahū;",
"tha-ap193:4.3": "Devalaṭṭhipaṭibhāgaṃ,",
"tha-ap193:4.4": "vimānaṃ me sunimmitaṃ.",
"tha-ap193:5.1": "Tamālapupphaṃ paggayha,",
"tha-ap193:5.2": "vippasannena cetasā;",
"tha-ap193:5.3": "Buddhassa abhiropayiṃ,",
"tha-ap193:5.4": "sikhino lokabandhuno.",
"tha-ap193:6.1": "Ekattiṃse ito kappe,",
"tha-ap193:6.2": "yaṃ kammamakariṃ tadā;",
"tha-ap193:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap193:6.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap193:7.1": "Ito vīsatime kappe,",
"tha-ap193:7.2": "candatittoti ekako;",
"tha-ap193:7.3": "Sattaratanasampanno,",
"tha-ap193:7.4": "cakkavattī mahabbalo.",
"tha-ap193:8.1": "Paṭisambhidā catasso,",
"tha-ap193:8.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap193:8.3": "Chaḷabhiññā sacchikatā,",
"tha-ap193:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap193:9.1": "Itthaṃ sudaṃ āyasmā tamālapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap193:10.1": "Tamālapupphiyattherassāpadānaṃ paṭhamaṃ."
}