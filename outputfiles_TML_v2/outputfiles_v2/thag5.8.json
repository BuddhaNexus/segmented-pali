{
    "ai-thag5.8:0.1_0": "Theragāthā",
    "ai-thag5.8:0.2_0": "Pañcakanipāta",
    "ai-thag5.8:0.3_0": "Paṭhamavagga",
    "ai-thag5.8:0.4_0": "5.8. Vakkalittheragāthā",
    "ai-thag5.8:1.1_0": "“Struck by a wind ailment",
    "ai-thag5.8:1.2_0": "While staying in the forest,",
    "ai-thag5.8:1.3_0": "you’ve entered a tough place for gathering alms—",
    "ai-thag5.8:1.4_0": "how will you get by, monk?”",
    "ai-thag5.8:2.1_0": "with rapture and happiness,",
    "ai-thag5.8:2.2_0": "with abundant rapture and happiness,",
    "ai-thag5.8:2.3_0": "putting up with what’s tough,",
    "ai-thag5.8:2.4_0": "I’ll dwell in the forest.",
    "ai-thag5.8:3.1_0": "developing mindfulness of the body,",
    "ai-thag5.8:3.2_0": "the faculties and powers,",
    "ai-thag5.8:3.3_0": "developing the factors of awakening,",
    "ai-thag5.8:3.4_0": "I’ll dwell in the forest.",
    "ai-thag5.8:4.1_0": "I see the disciples in harmony,",
    "ai-thag5.8:4.2_0": "energetic and resolute,",
    "ai-thag5.8:4.3_0": "harmonious and united,",
    "ai-thag5.8:4.4_0": "I’ll dwell in the forest.",
    "ai-thag5.8:5.1_0": "Recollecting the Buddha—",
    "ai-thag5.8:5.2_0": "the best, the tamed, the serene—",
    "ai-thag5.8:5.3_0": "tireless all day and night",
    "ai-thag5.8:5.4_0": "I’ll dwell in the forest.”",
    "ai-thag5.8:5.5_0": "the Vakkali ..."
}