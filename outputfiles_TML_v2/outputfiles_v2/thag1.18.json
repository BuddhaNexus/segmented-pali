{
    "ai-thag1.18:0.1_0": "Theragāthā",
    "ai-thag1.18:0.2_0": "Ekakanipāta",
    "ai-thag1.18:0.3_0": "Dutiyavagga",
    "ai-thag1.18:0.4_0": "1.18. Siṅgālapituttheragāthā",
    "ai-thag1.18:1.1_0": "There was an heir of the Buddha,",
    "ai-thag1.18:1.2_0": "a monk in Bhesakaḷā forest,",
    "ai-thag1.18:1.3_0": "It is all close to me,",
    "ai-thag1.18:1.4_0": "with the perception of bones.",
    "ai-thag1.18:1.5_0": "* I think there is desire for sensual pleasures.",
    "ai-thag1.18:1.6_0": "get rid of sensual desire.",
    "ai-thag1.18:1.7_0": "Siṅgālaka,"
}