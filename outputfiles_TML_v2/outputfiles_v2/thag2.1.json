{
    "ai-thag2.1:0.1_0": "Theragāthā",
    "ai-thag2.1:0.2_0": "Dukanipāta",
    "ai-thag2.1:0.3_0": "Paṭhamavagga",
    "ai-thag2.1:0.4_0": "2.1. Uttarattheragāthā",
    "ai-thag2.1:1.1_0": "No life is permanent,",
    "ai-thag2.1:1.2_0": "and no conditions last forever.",
    "ai-thag2.1:1.3_0": "The aggregates are reborn",
    "ai-thag2.1:1.4_0": "nor do they grieve in the next life.",
    "ai-thag2.1:2.1_0": "Knowing this danger,",
    "ai-thag2.1:2.2_0": "I don’t need another life.",
    "ai-thag2.1:2.3_0": "I’ve escaped all sensual pleasures,",
    "ai-thag2.1:2.4_0": "and attained the ending of defilements.",
    "ai-thag2.1:2.5_0": "That is how these verses were recited by the senior venerable Uttara."
}