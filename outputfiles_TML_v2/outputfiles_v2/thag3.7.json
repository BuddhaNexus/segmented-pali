{
    "ai-thag3.7:0.1_0": "Theragāthā",
    "ai-thag3.7:0.2_0": "Tikanipāta",
    "ai-thag3.7:0.3_0": "Paṭhamavagga",
    "ai-thag3.7:0.4_0": "3.7. Vāraṇattheragāthā",
    "ai-thag3.7:1.1_0": "Anyone among men",
    "ai-thag3.7:1.2_0": "who harms other creatures:",
    "ai-thag3.7:1.3_0": "a man falls to ruin",
    "ai-thag3.7:1.4_0": "in both this world and the next.",
    "ai-thag3.7:2.1_0": "But someone with a mind of love,",
    "ai-thag3.7:2.2_0": "if she teaches;",
    "ai-thag3.7:2.3_0": "a person like that",
    "ai-thag3.7:2.4_0": "such a person doesn’t grant them.",
    "ai-thag3.7:3.1_0": "a mendicant of good wisdom,",
    "ai-thag3.7:3.2_0": "in attending closely to ascetics,",
    "ai-thag3.7:3.3_0": "in sitting alone in hidden places,",
    "ai-thag3.7:3.4_0": "and in calming the mind.",
    "ai-thag3.7:3.5_0": "The senior monk Soṇa,"
}