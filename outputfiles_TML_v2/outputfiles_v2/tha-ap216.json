{
    "ai-tha-ap216:0.1_0": "Therāpadāna",
    "ai-tha-ap216:0.2_0": "Hatthivagga",
    "ai-tha-ap216:0.3_0": "4. Ekasaññakattheraapadāna",
    "ai-tha-ap216:1.1_0": "“You wear rag robes,",
    "ai-tha-ap216:1.2_0": "seeing the Teacher of the sword,",
    "ai-tha-ap216:1.3_0": "raising his hands in respectful salutation,",
    "ai-tha-ap216:1.4_0": "corrupted by rags,",
    "ai-tha-ap216:2.1_0": "It’s been thirty one eons",
    "ai-tha-ap216:2.2_0": "the self-controlled in perception,",
    "ai-tha-ap216:2.3_0": "I’m not aware of any living creatures.",
    "ai-tha-ap216:2.4_0": "this fruit is to know,",
    "ai-tha-ap216:3.1_0": "twenty eons after the left of the world.",
    "ai-tha-ap216:3.2_0": "solitary, content,",
    "ai-tha-ap216:3.3_0": "They don’t enjoy themselves.",
    "ai-tha-ap216:3.4_0": "The Mahallika conversions",
    "ai-tha-ap216:4.1_0": "the four analytical knowledges,",
    "ai-tha-ap216:4.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap216:4.3_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap216:5.1_0": "That is how these verses were recited by the senior venerable Jotika.",
    "ai-tha-ap216:6.1_0": "One Elder Upasampadā"
}