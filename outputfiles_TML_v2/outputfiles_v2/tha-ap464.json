{
    "ai-tha-ap464:0.1_0": "Therāpadāna",
    "ai-tha-ap464:0.2_0": "Sālakusumiyavagga",
    "ai-tha-ap464:0.3_0": "2. Citakapūjakattheraapadāna",
    "ai-tha-ap464:1.1_0": "“Having seen the Fortunate One’s Dhamma,",
    "ai-tha-ap464:1.2_0": "Kinsman of the world,",
    "ai-tha-ap464:1.3_0": "Campaka flowers,",
    "ai-tha-ap464:1.4_0": "I crashed the pyre.",
    "ai-tha-ap464:2.1_0": "It’s been thirty one eons",
    "ai-tha-ap464:2.2_0": "it was all over the flower.",
    "ai-tha-ap464:2.3_0": "I’m not aware of any living creatures.",
    "ai-tha-ap464:2.4_0": "excessive funeral pyre,",
    "ai-tha-ap464:3.1_0": "corrupted by defilements,",
    "ai-tha-ap464:3.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap464:3.3_0": "and live without defilements.",
    "ai-tha-ap464:4.1_0": "It was so welcome for me",
    "ai-tha-ap464:4.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap464:4.3_0": "and fulfilled the Buddha’s instructions.",
    "ai-tha-ap464:5.1_0": "the four analytical knowledges,",
    "ai-tha-ap464:5.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap464:5.3_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap464:6.1_0": "That is how these verses were recited by the senior venerable Piṇḍolabhāradvāja.",
    "ai-tha-ap464:7.1_0": "The Second Universal Monkey"
}