{
    "ai-thag1.50:0.1_0": "Theragāthā",
    "ai-thag1.50:0.2_0": "Ekakanipāta",
    "ai-thag1.50:0.3_0": "Pañcamavagga",
    "ai-thag1.50:0.4_0": "1.50. Vimalattheragāthā",
    "ai-thag1.50:1.1_0": "The rain falls and the wind blows on mother earth,",
    "ai-thag1.50:1.2_0": "while lightning flashes across the sky!",
    "ai-thag1.50:1.3_0": "But my thoughts are stilled,",
    "ai-thag1.50:1.4_0": "my mind is serene.",
    "ai-thag1.50:1.5_0": "…",
    "ai-thag1.50:1.6_0": "The senior monk ...",
    "ai-thag1.50:1.7_0": "The fifth sub-chapter on making amends.",
    "ai-thag1.50:2.0_0": "“This is the summary:",
    "ai-thag1.50:2.1_0": "The elder Revata, Revata,",
    "ai-thag1.50:2.2_0": "weaving thread hairs of the Sumaṅgala,",
    "ai-thag1.50:2.3_0": "living near to him.",
    "ai-thag1.50:2.4_0": "intelligent, fully laughing,",
    "ai-thag1.50:2.5_0": "The elder who was delighted",
    "ai-thag1.50:2.6_0": "Vimala, and discarded."
}