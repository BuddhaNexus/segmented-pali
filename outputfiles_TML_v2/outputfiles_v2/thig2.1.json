{
    "ai-thig2.1:0.1_0": "Therīgāthā",
    "ai-thig2.1:0.2_0": "Dukanipāta",
    "ai-thig2.1:0.3_0": "1. Abhirūpanandātherīgāthā",
    "ai-thig2.1:1.1_0": "Nandā, see this bag of bones as",
    "ai-thig2.1:1.2_0": "diseased, filthy, and rotten.",
    "ai-thig2.1:1.3_0": "With mind unified and serene,",
    "ai-thig2.1:1.4_0": "unified, serene.",
    "ai-thig2.1:2.1_0": "Meditate on the signless,",
    "ai-thig2.1:2.2_0": "give up the tendency to conceit;",
    "ai-thig2.1:2.3_0": "and when you comprehend conceit,",
    "ai-thig2.1:2.4_0": "you will live at peace.",
    "ai-thig2.1:3.1_0": "That is how these verses were recited by the senior nun Ānanda."
}