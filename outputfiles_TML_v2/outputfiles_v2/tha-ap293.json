{
    "ai-tha-ap293:0.1_0": "Therāpadāna",
    "ai-tha-ap293:0.2_0": "Citakapūjakavagga",
    "ai-tha-ap293:0.3_0": "1. Citakapūjakattheraapadāna",
    "ai-tha-ap293:1.1_0": "“The name of Gotama,",
    "ai-tha-ap293:1.2_0": "Then the brahmin named Khaṇḍa.",
    "ai-tha-ap293:1.3_0": "they say, the melted calves.",
    "ai-tha-ap293:1.4_0": "I gained different flowers.",
    "ai-tha-ap293:2.1_0": "Having seen a knife, the Pure One’s mind,",
    "ai-tha-ap293:2.2_0": "Kinsman of the world,",
    "ai-tha-ap293:2.3_0": "Having lighted a flower,",
    "ai-tha-ap293:2.4_0": "I sprinkled the heart",
    "ai-tha-ap293:3.1_0": "It’s been thirty one eons",
    "ai-tha-ap293:3.2_0": "As a bird was worshipped by the flowers,",
    "ai-tha-ap293:3.3_0": "I’m not aware of any living creatures.",
    "ai-tha-ap293:3.4_0": "this fruit is to know,",
    "ai-tha-ap293:4.1_0": "he transcends seven eons",
    "ai-tha-ap293:4.2_0": "Sentient beings born in the Vedas.",
    "ai-tha-ap293:4.3_0": "your workers are burning.",
    "ai-tha-ap293:4.4_0": "The Many-Carried wheels",
    "ai-tha-ap293:5.1_0": "the four analytical knowledges,",
    "ai-tha-ap293:5.2_0": "having excellence and liberation,",
    "ai-tha-ap293:5.3_0": "I’ve realized the six kinds of direct knowledge,",
    "ai-tha-ap293:5.4_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap293:6.1_0": "That is how these verses were recited by the senior venerable Piṇḍolabhāradvāja.",
    "ai-tha-ap293:7.1_0": "First the Elder Nunsakaḷivisa"
}