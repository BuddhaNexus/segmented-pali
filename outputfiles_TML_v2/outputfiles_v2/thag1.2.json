{
    "ai-thag1.2:0.1_0": "Theragāthā",
    "ai-thag1.2:0.2_0": "Ekakanipāta",
    "ai-thag1.2:0.3_0": "Paṭhamavagga",
    "ai-thag1.2:0.4_0": "1.2. Mahākoṭṭhikattheragāthā",
    "ai-thag1.2:1.1_0": "Calm and quiet,",
    "ai-thag1.2:1.2_0": "thoughtful in counsel, and stable,",
    "ai-thag1.2:1.3_0": "he shakes off bad qualities",
    "ai-thag1.2:1.4_0": "as the wind shakes leaves off a tree.",
    "ai-thag1.2:1.5_0": "That is how this verse was recited by the senior venerable Mahākoṭṭhita."
}