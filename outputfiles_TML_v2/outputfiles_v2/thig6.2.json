{
    "ai-thig6.2:0.1_0": "Therīgāthā",
    "ai-thig6.2:0.2_0": "Chakkanipāta",
    "ai-thig6.2:0.3_0": "2. Vāseṭṭhītherīgāthā",
    "ai-thig6.2:1.1_0": "Struck down with grief for my son,",
    "ai-thig6.2:1.2_0": "deranged, out of my mind,",
    "ai-thig6.2:1.3_0": "naked, my hair flying,",
    "ai-thig6.2:1.4_0": "I wandered here and there.",
    "ai-thig6.2:2.1_0": "I lived on rubbish heaps,",
    "ai-thig6.2:2.2_0": "cemeteries and streets,",
    "ai-thig6.2:2.3_0": "For three years I wandered,",
    "ai-thig6.2:2.4_0": "stricken by hunger and thirst.",
    "ai-thig6.2:3.1_0": "Then I saw the Holy One,",
    "ai-thig6.2:3.2_0": "to the city of Mithilā.",
    "ai-thig6.2:3.3_0": "tamer of the untamed,",
    "ai-thig6.2:3.4_0": "the Awakened One who fears nothing from any quarter.",
    "ai-thig6.2:4.1_0": "full of spiritual heart,",
    "ai-thig6.2:4.2_0": "I paid homage and sat down.",
    "ai-thig6.2:4.3_0": "Out of compassion",
    "ai-thig6.2:4.4_0": "Gotama has compassion for me.",
    "ai-thig6.2:5.1_0": "After hearing his teaching,",
    "ai-thig6.2:5.2_0": "I went forth to homelessness.",
    "ai-thig6.2:5.3_0": "Applying myself to the Teacher’s words,",
    "ai-thig6.2:5.4_0": "I realized the state of grace.",
    "ai-thig6.2:6.1_0": "All sorrows are cut off,",
    "ai-thig6.2:6.2_0": "given up, they end here.",
    "ai-thig6.2:6.3_0": "I've fully understood the basis",
    "ai-thig6.2:6.4_0": "from which grief comes to be.",
    "ai-thig6.2:7.1_0": "Vāseṭṭhas,"
}