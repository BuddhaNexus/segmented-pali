{
    "ai-tha-ap445:0.1_0": "Therāpadāna",
    "ai-tha-ap445:0.2_0": "Vibhītakavagga",
    "ai-tha-ap445:0.3_0": "3 Billiyattheraapadāna",
    "ai-tha-ap445:1.1_0": "“One from the bank of the river,",
    "ai-tha-ap445:1.2_0": "my hermitage is clean,",
    "ai-tha-ap445:1.3_0": "Mātali, the root of a tree,",
    "ai-tha-ap445:1.4_0": "you’ll enter the summary state—",
    "ai-tha-ap445:2.1_0": "Having seen him,",
    "ai-tha-ap445:2.2_0": "recollecting the Buddha,",
    "ai-tha-ap445:2.3_0": "filling the waters with the stream,",
    "ai-tha-ap445:2.4_0": "contentment,",
    "ai-tha-ap445:3.1_0": "Kakusandha, gathering in the world,",
    "ai-tha-ap445:3.2_0": "I’ll leave that place",
    "ai-tha-ap445:3.3_0": "When the stream is completed,",
    "ai-tha-ap445:3.4_0": "with clear and confident heart,",
    "ai-tha-ap445:4.1_0": "in this place",
    "ai-tha-ap445:4.2_0": "I used to be a fruit.",
    "ai-tha-ap445:4.3_0": "I’m not aware of any living creatures.",
    "ai-tha-ap445:4.4_0": "as fruit is the fruit.",
    "ai-tha-ap445:5.1_0": "corrupted by defilements,",
    "ai-tha-ap445:5.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap445:5.3_0": "and live without defilements.",
    "ai-tha-ap445:6.1_0": "It was so welcome for me",
    "ai-tha-ap445:6.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap445:6.3_0": "and fulfilled the Buddha’s instructions.",
    "ai-tha-ap445:7.1_0": "the four analytical knowledges,",
    "ai-tha-ap445:7.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap445:7.3_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap445:8.1_0": "That is how these verses were recited by the senior venerable Bāhiya.",
    "ai-tha-ap445:9.1_0": "Third: Bāhiya of the Elder Bark Robe, thirdly"
}