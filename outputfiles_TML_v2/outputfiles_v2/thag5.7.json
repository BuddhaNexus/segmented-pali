{
    "ai-thag5.7:0.1_0": "Theragāthā",
    "ai-thag5.7:0.2_0": "Pañcakanipāta",
    "ai-thag5.7:0.3_0": "Paṭhamavagga",
    "ai-thag5.7:0.4_0": "5.7. Gayākassapattheragāthā",
    "ai-thag5.7:1.1_0": "“In the middle of the day,",
    "ai-thag5.7:1.2_0": "three times",
    "ai-thag5.7:1.3_0": "I plunged into the water at Gayā",
    "ai-thag5.7:1.4_0": "for the Gayā spring festival.",
    "ai-thag5.7:2.1_0": "Whatever bad things I’ve done",
    "ai-thag5.7:2.2_0": "in previous lives,",
    "ai-thag5.7:2.3_0": "I’m a gift here.’",
    "ai-thag5.7:2.4_0": "so I viewalized in the past.",
    "ai-thag5.7:3.1_0": "Having heard the fine words,",
    "ai-thag5.7:3.2_0": "a passage meaningful and principled,",
    "ai-thag5.7:3.3_0": "What’s good for one,",
    "ai-thag5.7:3.4_0": "on the true, essential goal.",
    "ai-thag5.7:4.1_0": "I’ve washed away all bad things;",
    "ai-thag5.7:4.2_0": "I’m stainless, clean, pristine;",
    "ai-thag5.7:4.3_0": "heirs are pure and heirless,",
    "ai-thag5.7:4.4_0": "a true-born child of the Buddha.",
    "ai-thag5.7:5.1_0": "When I plunged into the eightfold stream,",
    "ai-thag5.7:5.2_0": "all bad things were washed away.",
    "ai-thag5.7:5.3_0": "I’ve attained the three knowledges",
    "ai-thag5.7:5.4_0": "and fulfilled the Buddha’s instructions.",
    "ai-thag5.7:5.5_0": "the senior monk Gayā Kassapa,"
}