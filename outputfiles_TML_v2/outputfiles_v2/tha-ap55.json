{
    "ai-tha-ap55:0.1_0": "Therāpadāna",
    "ai-tha-ap55:0.2_0": "Bījanivagga",
    "ai-tha-ap55:0.3_0": "3. Sayanadāyakattheraapadāna",
    "ai-tha-ap55:1.1_0": "“Padumuttara, the Buddha Padumuttara,",
    "ai-tha-ap55:1.2_0": "explaining the whole world.",
    "ai-tha-ap55:1.3_0": "I’d sit down on a bed.",
    "ai-tha-ap55:1.4_0": "with clear and confident heart,",
    "ai-tha-ap55:2.1_0": "Reflecting that grove",
    "ai-tha-ap55:2.2_0": "in the true teaching, the seeds,",
    "ai-tha-ap55:2.3_0": "the household life is used.",
    "ai-tha-ap55:2.4_0": "this is the fruition lying down.",
    "ai-tha-ap55:3.1_0": "I lie down in the air.",
    "ai-tha-ap55:3.2_0": "I remember this land.",
    "ai-tha-ap55:3.3_0": "in my jealousy.",
    "ai-tha-ap55:3.4_0": "this is the fruition lying down.",
    "ai-tha-ap55:4.1_0": "and five-hundred thousand people",
    "ai-tha-ap55:4.2_0": "these eight great bases.",
    "ai-tha-ap55:4.3_0": "Four eons of expanding.",
    "ai-tha-ap55:4.4_0": "and four great kings,",
    "ai-tha-ap55:5.1_0": "the four analytical knowledges,",
    "ai-tha-ap55:5.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap55:5.3_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap55:6.1_0": "That is how these verses were recited by the senior venerable Set out.",
    "ai-tha-ap55:7.1_0": "while sleeping, this third Elder Nun"
}