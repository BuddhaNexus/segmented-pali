{
    "ai-thag3.5:0.1_0": "Theragāthā",
    "ai-thag3.5:0.2_0": "Tikanipāta",
    "ai-thag3.5:0.3_0": "Paṭhamavagga",
    "ai-thag3.5:0.4_0": "3.5. Mātaṅgaputtattheragāthā",
    "ai-thag3.5:1.1_0": "“It’s too cold, too hot,",
    "ai-thag3.5:1.2_0": "too late,’ they say.",
    "ai-thag3.5:1.3_0": "When the young neglect their work like this,",
    "ai-thag3.5:1.4_0": "opportunities pass them by.",
    "ai-thag3.5:2.1_0": "But one who considers heat and cold",
    "ai-thag3.5:2.2_0": "as nothing more than blades of grass—",
    "ai-thag3.5:2.3_0": "he does his duties as a man,",
    "ai-thag3.5:2.4_0": "and his happiness never fails.",
    "ai-thag3.5:3.1_0": "With my chest I’ll thrust aside",
    "ai-thag3.5:3.2_0": "the grasses, vines, and creepers,",
    "ai-thag3.5:3.3_0": "I’ll overcome sharing the quarters,",
    "ai-thag3.5:3.4_0": "and foster seclusion.",
    "ai-thag3.5:3.5_0": "his mother ..."
}