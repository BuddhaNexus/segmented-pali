{
    "ai-thag4.9:0.1_0": "Theragāthā",
    "ai-thag4.9:0.2_0": "Catukkanipāta",
    "ai-thag4.9:0.3_0": "Paṭhamavagga",
    "ai-thag4.9:0.4_0": "4.9. Candanattheragāthā",
    "ai-thag4.9:1.1_0": "Covered over with gold,",
    "ai-thag4.9:1.2_0": "and surrounded by my maids.",
    "ai-thag4.9:1.3_0": "I didn’t long for your son,",
    "ai-thag4.9:1.4_0": "my wife came to me.",
    "ai-thag4.9:2.1_0": "I saw her coming,",
    "ai-thag4.9:2.2_0": "the mother of my son,",
    "ai-thag4.9:2.3_0": "adorned with jewelry and all dressed up,",
    "ai-thag4.9:2.4_0": "like a snare of death laid down.",
    "ai-thag4.9:3.1_0": "Then the realization",
    "ai-thag4.9:3.2_0": "came upon me—",
    "ai-thag4.9:3.3_0": "the danger became clear,",
    "ai-thag4.9:3.4_0": "and I was firmly disillusioned.",
    "ai-thag4.9:4.1_0": "Then my mind was freed—",
    "ai-thag4.9:4.2_0": "see the excellence of the teaching!”",
    "ai-thag4.9:4.3_0": "I’ve attained the three knowledges;",
    "ai-thag4.9:4.4_0": "and fulfilled the Buddha’s instructions.",
    "ai-thag4.9:4.5_0": "... and the senior venerable Nandaka,"
}