{
    "ai-thag2.18:0.1_0": "Theragāthā",
    "ai-thag2.18:0.2_0": "Dukanipāta",
    "ai-thag2.18:0.3_0": "Dutiyavagga",
    "ai-thag2.18:0.4_0": "2.18 Kimilattheragāthā",
    "ai-thag2.18:1.1_0": "In Pācīnavaṁsa grove",
    "ai-thag2.18:1.2_0": "the companions of the Sakyans,",
    "ai-thag2.18:1.3_0": "We’ve given up wealth,",
    "ai-thag2.18:1.4_0": "happy with the scraps in our bowls,",
    "ai-thag2.18:2.1_0": "Be energetic, resolute,",
    "ai-thag2.18:2.2_0": "and always staunchly vigorous.",
    "ai-thag2.18:2.3_0": "having given up mundane delights,",
    "ai-thag2.18:2.4_0": "they enjoy the delights of the Dhamma.",
    "ai-thag2.18:2.5_0": "the senior monks ..."
}