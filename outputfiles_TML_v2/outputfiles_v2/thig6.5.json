{
    "ai-thig6.5:0.1_0": "Therīgāthā",
    "ai-thig6.5:0.2_0": "Chakkanipāta",
    "ai-thig6.5:0.3_0": "5. Anopamātherīgāthā",
    "ai-thig6.5:1.1_0": "I was born into an eminent family,",
    "ai-thig6.5:1.2_0": "affluent and wealthy,",
    "ai-thig6.5:1.3_0": "by a beautiful form,",
    "ai-thig6.5:1.4_0": "daughter of the Buddha,",
    "ai-thig6.5:2.1_0": "I was sought by princes,",
    "ai-thig6.5:2.2_0": "coveted by sons of the wealthy.",
    "ai-thig6.5:2.3_0": "loved by my father, a messenger,",
    "ai-thig6.5:2.4_0": "“Give me Anopamā!",
    "ai-thig6.5:3.1_0": "However much your daughter",
    "ai-thig6.5:3.2_0": "Anopamā weighs,",
    "ai-thig6.5:3.3_0": "I'll give you eight times that",
    "ai-thig6.5:3.4_0": "in gold and gems.”",
    "ai-thig6.5:4.1_0": "Having seen (that), I understood the Sambuddha,",
    "ai-thig6.5:4.2_0": "the world’s Elder, unsurpassed,",
    "ai-thig6.5:4.3_0": "I paid homage at his feet,",
    "ai-thig6.5:4.4_0": "I retired to a discreet place.",
    "ai-thig6.5:5.1_0": "Out of compassion",
    "ai-thig6.5:5.2_0": "Gotama has compassion for me.",
    "ai-thig6.5:5.3_0": "While sitting in that seat,",
    "ai-thig6.5:5.4_0": "the third (food) fruit.",
    "ai-thig6.5:6.1_0": "Then, having cut off my hair,",
    "ai-thig6.5:6.2_0": "I went forth to homelessness.",
    "ai-thig6.5:6.3_0": "seven days.",
    "ai-thig6.5:6.4_0": "since my craving dried up.",
    "ai-thig6.5:7.1_0": "senior monks ..."
}