{
    "ai-thag3.4:0.1_0": "Theragāthā",
    "ai-thag3.4:0.2_0": "Tikanipāta",
    "ai-thag3.4:0.3_0": "Paṭhamavagga",
    "ai-thag3.4:0.4_0": "3.4. Dhaniyattheragāthā",
    "ai-thag3.4:1.1_0": "“If you wish to live in happiness,",
    "ai-thag3.4:1.2_0": "longing for the ascetic life,",
    "ai-thag3.4:1.3_0": "Don’t think,",
    "ai-thag3.4:1.4_0": "about lodgings, robes,",
    "ai-thag3.4:2.1_0": "If you wish to live in happiness,",
    "ai-thag3.4:2.2_0": "longing for the ascetic life,",
    "ai-thag3.4:2.3_0": "stay in the Saṅgha’s lodgings",
    "ai-thag3.4:2.4_0": "like a snake making use of a mouse’s hole.",
    "ai-thag3.4:3.1_0": "If you wish to live in happiness,",
    "ai-thag3.4:3.2_0": "longing for the ascetic life,",
    "ai-thag3.4:3.3_0": "develop this one quality:",
    "ai-thag3.4:3.4_0": "and this is the teaching.”",
    "ai-thag3.4:3.5_0": "the senior monks ..."
}