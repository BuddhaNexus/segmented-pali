{
    "ai-tha-ap499:0.1_0": "Therāpadāna",
    "ai-tha-ap499:0.2_0": "Kiṅkaṇipupphavagga",
    "ai-tha-ap499:0.3_0": "7. Udakadāyakattheraapadāna",
    "ai-tha-ap499:1.1_0": "“Padumuttara, the Buddha Padumuttara,",
    "ai-tha-ap499:1.2_0": "the supreme Saṅgha of monks.",
    "ai-tha-ap499:1.3_0": "confident in heart,",
    "ai-tha-ap499:1.4_0": "I filled the well-off trash.",
    "ai-tha-ap499:2.1_0": "to a mountain or a tree;",
    "ai-tha-ap499:2.2_0": "on the ground, and on the earth,",
    "ai-tha-ap499:2.3_0": "When I want water to drink,",
    "ai-tha-ap499:2.4_0": "Quickly rebirth into my presence.",
    "ai-tha-ap499:3.1_0": "it’s a hundred thousand eons",
    "ai-tha-ap499:3.2_0": "Giving a gift (of giving) gifts,",
    "ai-tha-ap499:3.3_0": "I’m not aware of any living creatures.",
    "ai-tha-ap499:3.4_0": "this is the fruit for the donor.",
    "ai-tha-ap499:4.1_0": "corrupted by defilements,",
    "ai-tha-ap499:4.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap499:4.3_0": "and live without defilements.",
    "ai-tha-ap499:5.1_0": "It was so welcome for me",
    "ai-tha-ap499:5.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap499:5.3_0": "and fulfilled the Buddha’s instructions.",
    "ai-tha-ap499:6.1_0": "the four analytical knowledges,",
    "ai-tha-ap499:6.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap499:6.3_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap499:7.1_0": "That is how these verses were recited by the senior venerable Protector.",
    "ai-tha-ap499:8.1_0": "(Once) water-pots of the Elder Nun Universal Monarch"
}