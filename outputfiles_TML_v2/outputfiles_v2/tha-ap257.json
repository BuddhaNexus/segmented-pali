{
    "ai-tha-ap257:0.1_0": "Therāpadāna",
    "ai-tha-ap257:0.2_0": "Thomakavagga",
    "ai-tha-ap257:0.3_0": "5. Sattapāṭaliyattheraapadāna",
    "ai-tha-ap257:1.1_0": "“One who is like a morsel,",
    "ai-tha-ap257:1.2_0": "sitting cross-legged in the mountain,",
    "ai-tha-ap257:1.3_0": "flowers, fruits of Pāṭaligāma.",
    "ai-tha-ap257:1.4_0": "I enjoyed the Buddha.",
    "ai-tha-ap257:2.1_0": "if he makes his four eons;",
    "ai-tha-ap257:2.2_0": "it was all over the flower.",
    "ai-tha-ap257:2.3_0": "I’m not aware of any living creatures.",
    "ai-tha-ap257:2.4_0": "this fruit is to know,",
    "ai-tha-ap257:3.1_0": "the four analytical knowledges,",
    "ai-tha-ap257:3.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap257:3.3_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap257:4.1_0": "That is how these verses were recited by the senior venerable Pāṭaliputta.",
    "ai-tha-ap257:5.1_0": "The fifth Elder Piṭattaka"
}