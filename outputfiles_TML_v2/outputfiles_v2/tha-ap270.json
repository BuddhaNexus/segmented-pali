{
    "ai-tha-ap270:0.1_0": "Therāpadāna",
    "ai-tha-ap270:0.2_0": "Padumukkhipavagga",
    "ai-tha-ap270:0.3_0": "8 Saḷalapupphiyattheraapadāna",
    "ai-tha-ap270:1.1_0": "“One from the bank of the river,",
    "ai-tha-ap270:1.2_0": "Then Kisā",
    "ai-tha-ap270:1.3_0": "I saw the Buddha,",
    "ai-tha-ap270:1.4_0": "from a net of family.",
    "ai-tha-ap270:2.1_0": "confident in heart,",
    "ai-tha-ap270:2.2_0": "May you attain ultimate happiness",
    "ai-tha-ap270:2.3_0": "Approaching the neck,",
    "ai-tha-ap270:2.4_0": "I roamed around them",
    "ai-tha-ap270:3.1_0": "A single eon irrevers:",
    "ai-tha-ap270:3.2_0": "As a bird was worshipped by the flowers,",
    "ai-tha-ap270:3.3_0": "I’m not aware of any living creatures.",
    "ai-tha-ap270:3.4_0": "this fruit is to know,",
    "ai-tha-ap270:4.1_0": "the four analytical knowledges,",
    "ai-tha-ap270:4.2_0": "... “I’ll sleep ...”",
    "ai-tha-ap270:4.3_0": "and fulfilled the Buddha’s instructions.”",
    "ai-tha-ap270:5.1_0": "That is how these verses were recited by the senior venerable Saṅgārava.",
    "ai-tha-ap270:6.1_0": "near the eighth day of the fortnight of the Elder Nun Place."
}