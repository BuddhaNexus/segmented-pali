{
"kv18.3:1.1": "Kathāvatthu",
"kv18.3:2.1": "Mahāpaṇṇāsaka",
"kv18.3:3.1": "Aṭṭhārasamavagga",
"kv18.3:4.1": "Karuṇākathā",
"kv18.3:5.1": "Natthi buddhassa bhagavato karuṇāti?",
"kv18.3:5.2": "Āmantā.",
"kv18.3:5.3": "Natthi buddhassa bhagavato mettāti?",
"kv18.3:5.4": "Na hevaṃ vattabbe … pe …",
"kv18.3:5.6": "natthi buddhassa bhagavato karuṇāti?",
"kv18.3:5.7": "Āmantā.",
"kv18.3:5.8": "Natthi buddhassa bhagavato muditā … pe …",
"kv18.3:5.10": "upekkhāti?",
"kv18.3:5.11": "Na hevaṃ vattabbe … pe ….",
"kv18.3:6.1": "Atthi buddhassa bhagavato mettāti?",
"kv18.3:6.2": "Āmantā.",
"kv18.3:6.3": "Atthi buddhassa bhagavato karuṇāti?",
"kv18.3:6.4": "Na hevaṃ vattabbe … pe …",
"kv18.3:6.6": "atthi buddhassa bhagavato muditā … pe …",
"kv18.3:6.8": "upekkhāti?",
"kv18.3:6.9": "Āmantā.",
"kv18.3:6.10": "Atthi buddhassa bhagavato karuṇāti?",
"kv18.3:6.11": "Na hevaṃ vattabbe … pe ….",
"kv18.3:7.1": "Natthi buddhassa bhagavato karuṇāti?",
"kv18.3:7.2": "Āmantā.",
"kv18.3:7.3": "Bhagavā akāruṇikoti?",
"kv18.3:7.4": "Na hevaṃ vattabbe … pe …",
"kv18.3:7.6": "nanu bhagavā kāruṇiko lokahito lokānukampako lokatthacaroti?",
"kv18.3:7.7": "Āmantā.",
"kv18.3:7.8": "Hañci bhagavā kāruṇiko lokahito lokānukampako lokatthacaro, no ca vata re vattabbe—",
"kv18.3:7.9": "“natthi buddhassa bhagavato karuṇā”ti … pe ….",
"kv18.3:8.1": "Natthi buddhassa bhagavato karuṇāti?",
"kv18.3:8.2": "Āmantā.",
"kv18.3:8.3": "Nanu bhagavā mahākaruṇāsamāpattiṃ samāpajjīti?",
"kv18.3:8.4": "Āmantā.",
"kv18.3:8.5": "Hañci bhagavā mahākaruṇāsamāpattiṃ samāpajji, no ca vata re vattabbe—",
"kv18.3:8.6": "“natthi buddhassa bhagavato karuṇā”ti.",
"kv18.3:9.1": "☒ Atthi buddhassa bhagavato karuṇāti?",
"kv18.3:9.2": "Āmantā.",
"kv18.3:9.3": "Bhagavā sarāgoti?",
"kv18.3:9.4": "Na hevaṃ vattabbe.",
"kv18.3:9.5": "Tena hi natthi buddhassa bhagavato karuṇāti.",
"kv18.3:10.1": "Karuṇākathā niṭṭhitā."
}