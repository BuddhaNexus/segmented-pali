{
  "anya-e1007n2:0": "Cāṇakyanītilā gāthā",
  "anya-e1007n2:1": "Lālane bahavo dosā,",
  "anya-e1007n2:2": "Tāḷane bahavo guṇā;",
  "anya-e1007n2:3": "Tasmā puttañca sissañca,",
  "anya-e1007n2:4": "Tāḷaye na ca lālaye.",
  "anya-e1007n2:5": "28.",
  "anya-e1007n2:6": " Atītassa hi mittassa,",
  "anya-e1007n2:7": "Yo ce dosaṃ pakāsaye;",
  "anya-e1007n2:8": "So have paccuppannassa,",
  "anya-e1007n2:9": "Dosaṃ bhāseti ñāyati.",
  "anya-e1007n2:10": "29.",
  "anya-e1007n2:11": " Latāviya sevakā te,",
  "anya-e1007n2:12": "Ye nissayaṃ palambare;",
  "anya-e1007n2:13": "Nissayassa vināsena,",
  "anya-e1007n2:14": "Bhūmyaṃ senti anāthakā.",
  "anya-e1007n2:15": "30.",
  "anya-e1007n2:16": " Dosasiṅgehi vijjhanto,",
  "anya-e1007n2:17": "Mānakhūrehi akkamaṃ;",
  "anya-e1007n2:18": "Bhayaṃ karoti lokamhi,",
  "anya-e1007n2:19": "Gova bālo vihiṃsako.",
  "anya-e1007n2:20": "31.",
  "anya-e1007n2:21": " Ādo upari lokoyaṃ,",
  "anya-e1007n2:22": "Ujulekhāya tiṭṭhati;",
  "anya-e1007n2:23": "Musāvātehi taṃlokaṃ,",
  "anya-e1007n2:24": "Nipātesi anajjavaṃ.",
  "anya-e1007n2:25": "32.",
  "anya-e1007n2:26": " Sughaṭaṃ kumbhakārena,",
  "anya-e1007n2:27": "Nāraho paribhuñjituṃ;",
  "anya-e1007n2:28": "Tathūpamāya vekkheyya,",
  "anya-e1007n2:29": "Sakammaparakammani.",
  "anya-e1007n2:30": "33.",
  "anya-e1007n2:31": " Anantaraṃsī sūropi,",
  "anya-e1007n2:32": "Nasakkoti ghanaṃ tamaṃ;",
  "anya-e1007n2:33": "Vijjhituṃ raṃsiyā loke,",
  "anya-e1007n2:34": "Tathā madanamohitā;",
  "anya-e1007n2:35": "Nasakkonti madaṃ bhetvā,",
  "anya-e1007n2:36": "Paññābhāya pabhāsituṃ.",
  "anya-e1007n2:37": "34.",
  "anya-e1007n2:38": " Khedaveraṃ daliddamhi,",
  "anya-e1007n2:39": "Bhogimhi rogupaddavaṃ;",
  "anya-e1007n2:40": "Dessaverañca āṇimhi,",
  "anya-e1007n2:41": "Passe lokassa veritaṃ.",
  "anya-e1007n2:42": "35.",
  "anya-e1007n2:43": " Saṃladdhena subhogena,",
  "anya-e1007n2:44": "Jīvaṃ suddhaṃ kare nijaṃ;",
  "anya-e1007n2:45": "Seṭṭho so tena jīvena,",
  "anya-e1007n2:46": "Jeguccho malajīviko.",
  "anya-e1007n2:47": "36.",
  "anya-e1007n2:48": " Vajira puppharāgānaṃ,",
  "anya-e1007n2:49": "Visesaṃ yo nabujjhati;",
  "anya-e1007n2:50": "Kathañhi so vikkīṇeyya,",
  "anya-e1007n2:51": "Kīṇeyya vā yathātathaṃ.",
  "anya-e1007n2:52": "37.",
  "anya-e1007n2:53": " Kippīli kopi cintetvā,",
  "anya-e1007n2:54": "Pabbataṃ bhettu mussahaṃ;",
  "anya-e1007n2:55": "Abalā tanumajjhattā,",
  "anya-e1007n2:56": "Cintā hasyāva sā mudhā.",
  "anya-e1007n2:57": "38.",
  "anya-e1007n2:58": " Jātamattaṃ na yo sattuṃ,",
  "anya-e1007n2:59": "Rogañcūpasamaṃ naye;",
  "anya-e1007n2:60": "Mahābalopi teneva,",
  "anya-e1007n2:61": "Vuddhiṃpatvā sa haññate.",
  "anya-e1007n2:62": "39.",
  "anya-e1007n2:63": " Sajīvamaṃsabhakkhehi ,",
  "anya-e1007n2:64": "Sadāṭhīhi mukhehi bho;",
  "anya-e1007n2:65": "Biḷārabyagghasīhānaṃ ,",
  "anya-e1007n2:66": "Nihīnāni anekadhā;",
  "anya-e1007n2:67": "Tikkhāni kharavādāni,",
  "anya-e1007n2:68": "Manussānaṃ mukhāni ve.",
  "anya-e1007n2:69": "40.",
  "anya-e1007n2:70": " Viluppantā vidhāvanti,",
  "anya-e1007n2:71": "Sajīvavuttikammunā;",
  "anya-e1007n2:72": "Janā tena vihaññanti,",
  "anya-e1007n2:73": "Caranti dhammavemukhā.",
  "anya-e1007n2:74": "41.",
  "anya-e1007n2:75": " Sulabhaṃ lokiyaṃ loke,",
  "anya-e1007n2:76": "Sāsanīyaṃva dullabhaṃ;",
  "anya-e1007n2:77": "Dullabhaṃ taṃ vamaññanto,",
  "anya-e1007n2:78": "Eso bālatamo bhave.",
  "anya-e1007n2:79": "42.",
  "anya-e1007n2:80": " Yo patittha agyāvāṭaṃ,",
  "anya-e1007n2:81": "Mohā taṃ upakārituṃ;",
  "anya-e1007n2:82": "Aññorohi tadā vāṭaṃ,",
  "anya-e1007n2:83": "Dutīyo muḷhamuḷhako.",
  "anya-e1007n2:84": "43.",
  "anya-e1007n2:85": " Byaggho āvudhaviddho hi,",
  "anya-e1007n2:86": "Akā duṭṭhāni ninnadaṃ;",
  "anya-e1007n2:87": "Tatheva sādhusatthena,",
  "anya-e1007n2:88": "Viddho bālo pakuppito.",
  "anya-e1007n2:89": "44.",
  "anya-e1007n2:90": " Pivanti lohitaṃ ḍaṃsā,",
  "anya-e1007n2:91": "Anto tuṇḍena makkhikā;",
  "anya-e1007n2:92": "Bahiddhā parivārenti,",
  "anya-e1007n2:93": "Jano tena ḍaṃsāyaye.",
  "anya-e1007n2:94": "45.",
  "anya-e1007n2:95": " Adhanassa khaṇo appo,",
  "anya-e1007n2:96": "Saddhammo appakālino;",
  "anya-e1007n2:97": "Appako tena yuñjeyyuṃ,",
  "anya-e1007n2:98": "Khaṇaṃ bahuṃ labhetave."
}