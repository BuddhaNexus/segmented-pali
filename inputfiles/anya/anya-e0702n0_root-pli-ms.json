{
  "anya-e0702n0:0": " Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0702n0:1": "Sāsanavaṃsappadīpikā",
  "anya-e0702n0:2": "Buddhaṃ sumālī dvipaduttamo tamo,",
  "anya-e0702n0:3": "Hantvāna bodhesidha paṅkajaṃ kajaṃ;",
  "anya-e0702n0:4": "Maggaggaselamhi suñaṭṭhito ṭhito,",
  "anya-e0702n0:5": "So maṃ ciraṃ pātu sukhaṃ sadā sadā.",
  "anya-e0702n0:6": "Sīhaḷaddīpatoyeva,",
  "anya-e0702n0:7": "Āgatehi disantare;",
  "anya-e0702n0:8": "Bhikkhūhi yācito kassaṃ,",
  "anya-e0702n0:9": "Sāsnavaṃsappadīpikaṃ.",
  "anya-e0702n0:10": "Kāmañca porāṇehi yā,",
  "anya-e0702n0:11": "Sāsnavaṃsappadipikā;",
  "anya-e0702n0:12": "Vitthāra vācanāmaggā,",
  "anya-e0702n0:13": "Viracitā vinicchayā.",
  "anya-e0702n0:14": "Sā pana mrammasāsāya,",
  "anya-e0702n0:15": "Katattāyeva etesaṃ;",
  "anya-e0702n0:16": "Dīpantaranivāsinaṃ,",
  "anya-e0702n0:17": "Vahāti suṭṭhunātthaṃ.",
  "anya-e0702n0:18": "Tasmā hi mūlabhāsāya,",
  "anya-e0702n0:19": "Karissāmi ahaṃ have;",
  "anya-e0702n0:20": "Saṃsanditvāna ganthehi,",
  "anya-e0702n0:21": "Taṃ sallakkhentu sādhavoti.",
  "anya-e0702n0:22": "Tatrāyaṃmātikā –",
  "anya-e0702n0:23": "1. Navaṭṭhānāgatasāsanavaṃsakathāmaggo,",
  "anya-e0702n0:24": "2. Sīhaḷadīpikasāsanavaṃsakathāmaggo,",
  "anya-e0702n0:25": "3. Suvaṇṇabhūmisāsanavaṃsakathāmaggo,",
  "anya-e0702n0:26": "4. Yonakaraṭṭhasāsanavaṃsakathāmaggo,",
  "anya-e0702n0:27": "5. Vanavāsīraṭṭhasāsanavaṃsakathāmaggo,",
  "anya-e0702n0:28": "6. Aparantaraṭṭhasāsanavaṃsakathāmaggo,",
  "anya-e0702n0:29": "7. Kasmīragandhāraraṭṭhasāsanavaṃsakathāmaggo,",
  "anya-e0702n0:30": "8. Mahiṃsakaraṭṭhasāsanavaṃsakathāmaggo,",
  "anya-e0702n0:31": "9. Mahāraṭṭhasāsanavaṃsavathāmaggo,",
  "anya-e0702n0:32": "10. Cinaraṭṭhasāsanavaṃsakathāmaggocāti."
}