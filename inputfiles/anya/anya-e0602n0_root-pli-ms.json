{
  "anya-e0602n0:0": " Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n0:1": "Mahāpaṇāmapāṭha",
  "anya-e0602n0:2": "(Buddhavandanā)",
  "anya-e0602n0:3": "1.",
  "anya-e0602n0:4": " So, ko; Ne, saṃ;",
  "anya-e0602n0:5": "2.",
  "anya-e0602n0:6": " Satthā, nesaṃ; Khemaṃ, dātā;",
  "anya-e0602n0:7": "3.",
  "anya-e0602n0:8": " Heḷāta-kkāro so; Jantūnaṃ, no mā nu;",
  "anya-e0602n0:9": "4.",
  "anya-e0602n0:10": " So lokandhaṃ, hantvā nakko;",
  "anya-e0602n0:11": "Sattambojaṃ, bodhetā nu.",
  "anya-e0602n0:12": "5.",
  "anya-e0602n0:13": " Jinasūriyo, tibhavanabhe;",
  "anya-e0602n0:14": "Muhatimiraṃ, abhitapaye.",
  "anya-e0602n0:15": "6.",
  "anya-e0602n0:16": " Jeno jinamūle, disvā janakāyaṃ;",
  "anya-e0602n0:17": "Saṃsāranimuggaṃ, sabbaññuta micchaṃ.",
  "anya-e0602n0:18": "7.",
  "anya-e0602n0:19": " Hitvā karupetaṃ, mokkhaṃ paṇidhānaṃ;",
  "anya-e0602n0:20": "Vattesi dayāṇā, yo taṃ muni vande.",
  "anya-e0602n0:21": "8.",
  "anya-e0602n0:22": " Sutāyubhariyā me, dhanaṅgamapi cajjaṃ.",
  "anya-e0602n0:23": "Cinaṃ budhinidāne, agā muniyaṃ metaṃ.",
  "anya-e0602n0:24": "9.",
  "anya-e0602n0:25": " So sasajātiya dehaṃ, cajjiya dānavarañca;",
  "anya-e0602n0:26": "Nāgusabho varasīlaṃ, pūrayi samparicāgo.",
  "anya-e0602n0:27": "10.",
  "anya-e0602n0:28": " Nekkhammaggaṃ rājā hutvā, senabbidvā paññāseṭṭhaṃ;",
  "anya-e0602n0:29": "Vedehindo vīrukkaṃsaṃ, khantīvādī khantīseṭṭhaṃ.",
  "anya-e0602n0:30": "11.",
  "anya-e0602n0:31": " So sutasomo tathagaṃ, temiya dhiṭṭhānavaraṃ;",
  "anya-e0602n0:32": "Ekabhugo mettavaraṃ, lomahasopekkhataraṃ.",
  "anya-e0602n0:33": "12.",
  "anya-e0602n0:34": " Pāramī tidukkarāva, pūriyāna seṭṭhabodhi;",
  "anya-e0602n0:35": "Pāpuṇittha yo ananta-dhammasāradaṃ namāmi.",
  "anya-e0602n0:36": "13.",
  "anya-e0602n0:37": " Pahāya cakkavattikaṃ, karopanīta maddiyaṃ;",
  "anya-e0602n0:38": "Bhusidhare sasenakaṃ, ajeni pāpimaṃ name.",
  "anya-e0602n0:39": "14.",
  "anya-e0602n0:40": " Athuttaraṃ jayākaraṃ, bahūpakārataṃ jino;",
  "anya-e0602n0:41": "Paṭicca nimmisakkhibhi, udikkhate namāmi taṃ.",
  "anya-e0602n0:42": "15.",
  "anya-e0602n0:43": " Caṅkame maruvimati yo, chindayaṃ kami rataniye;",
  "anya-e0602n0:44": "Iddhipāṭihiraṇakaro, cakkhumaṃ tamabhipaṇame.",
  "anya-e0602n0:45": "16.",
  "anya-e0602n0:46": " Atha ratanaghare buddho, chadidhiti janayaṃ saṅkhyaṃ;",
  "anya-e0602n0:47": "Sīmīsā tamabhidhammaṃ yo, suranaramahitaṃ vande.",
  "anya-e0602n0:48": "17.",
  "anya-e0602n0:49": " Nigrodhantika nubbhavī sukhaṃ, dhammaṃ yo vicinaṃ nadhīvaro;",
  "anya-e0602n0:50": "Kicchāladdha manaññabodhiyaṃ, vande taṃ sugataṃ nigrocaraṃ.",
  "anya-e0602n0:51": "18.",
  "anya-e0602n0:52": " Sabbhogehi tha mucalindena,",
  "anya-e0602n0:53": "Nāgindena rahasi pāvutto;",
  "anya-e0602n0:54": "Sokhyaṃ yo nubhavi vimuttiṃtaṃ,",
  "anya-e0602n0:55": "Vande mārāji atulappañño.",
  "anya-e0602n0:56": "19.",
  "anya-e0602n0:57": " Kāruṇiko rājāyatane yo,",
  "anya-e0602n0:58": "Bhoja muḷāraṃ bhojjarasekaṃ;",
  "anya-e0602n0:59": "Vāsa makā nantagguṇadhāro,",
  "anya-e0602n0:60": "Ekagato vandāmi mahesī.",
  "anya-e0602n0:61": "20.",
  "anya-e0602n0:62": " Keyyaṃ keyyaṃ abhijayaketuṃ,",
  "anya-e0602n0:63": "Jeyyaṃ jeyyaṃ varajayapānaṃ;",
  "anya-e0602n0:64": "Peyyaṃ peyyaṃ suvici name taṃ,",
  "anya-e0602n0:65": "Neyyaṃ neyyaṃ samatamupekkhiṃ.",
  "anya-e0602n0:66": "21.",
  "anya-e0602n0:67": " Satta ca sattāhe vijitāvī,",
  "anya-e0602n0:68": "Khepiya nigrodhaṃ puna gantvā;",
  "anya-e0602n0:69": "Dhammasududdasyaṃ pati jāto,",
  "anya-e0602n0:70": "Dhammakathā pposukka vitakko.",
  "anya-e0602n0:71": "22.",
  "anya-e0602n0:72": " Marugaṇehi brahmunā samaṃ,",
  "anya-e0602n0:73": "Ratanadāmameruṇā dadā;",
  "anya-e0602n0:74": "Samabhiyācito paṭissavaṃ,",
  "anya-e0602n0:75": "Dasabalo namāmi desituṃ.",
  "anya-e0602n0:76": "23.",
  "anya-e0602n0:77": " Gantvā isippātakkānanañca,",
  "anya-e0602n0:78": "Satthā migaddāyaṃ desayittha;",
  "anya-e0602n0:79": "Saccappakāraṃ yo dhammacakka-",
  "anya-e0602n0:80": "Suttaṃ name chabbīdhaṃsu tāva.",
  "anya-e0602n0:81": "24.",
  "anya-e0602n0:82": " Rañño magadhassa katappaṭiñño,",
  "anya-e0602n0:83": "Gantvānatha rājagahaṃ vineti;",
  "anya-e0602n0:84": "Satte malarogayute gadaggaṃ,",
  "anya-e0602n0:85": "Pāyetuna taṃ paṇame bhisakkaṃ.",
  "anya-e0602n0:86": "25.",
  "anya-e0602n0:87": " Sakyādhivāse kapile saññatiṃ,",
  "anya-e0602n0:88": "Mānaddhajaṃ bhindiya middhivātā;",
  "anya-e0602n0:89": "Dhammāmataṃ pāyi pituppabhuti,",
  "anya-e0602n0:90": "Vandāmi sakyinda manomadassiṃ.",
  "anya-e0602n0:91": "26.",
  "anya-e0602n0:92": " Anāthapiṇḍoti vhayena nanta-",
  "anya-e0602n0:93": "Ddhanaṃ cajitvā sukate vihāre;",
  "anya-e0602n0:94": "Vihāsi bhiyyo janatā hitatthaṃ,",
  "anya-e0602n0:95": "Sudhammabheriṃ vadayaṃ bhivande.",
  "anya-e0602n0:96": "27.",
  "anya-e0602n0:97": " Upetapuññaṃ varalakkhaṇokaṃ-",
  "anya-e0602n0:98": "Ṇokaṃ visuddhaṃ jalitappadīmaṃ;",
  "anya-e0602n0:99": "Dīpaṃ pajānaṃ anighaṃ navajjaṃ-",
  "anya-e0602n0:100": "Navajjavācaṃ sugataṃ namāmi.",
  "anya-e0602n0:101": "28.",
  "anya-e0602n0:102": " Munibhānu dhammapabhāhi jana-",
  "anya-e0602n0:103": "Mbuja muddhatandhatamo sutapo;",
  "anya-e0602n0:104": "Karuṇāruṇo samabodhayi yo,",
  "anya-e0602n0:105": "Bhavisītalattapano paṇame.",
  "anya-e0602n0:106": "29.",
  "anya-e0602n0:107": " Indu viyambaramajjhatale yo,",
  "anya-e0602n0:108": "Rājati tāragaṇena munindo;",
  "anya-e0602n0:109": "Ariyagaṇapparito tibhave taṃ,",
  "anya-e0602n0:110": "Sādara muggatasobha mavandi.",
  "anya-e0602n0:111": "30.",
  "anya-e0602n0:112": " Mūlāmūlā tiṃsatipāramiyo,",
  "anya-e0602n0:113": "Sākhāsākhā majjhimajjhānakāyā;",
  "anya-e0602n0:114": "Pattāpattā buddhacakkhuni yassa,",
  "anya-e0602n0:115": "Pupphāpupphā kāruṇā maggakhandho.",
  "anya-e0602n0:116": "31.",
  "anya-e0602n0:117": " Sārāsārā yamakā pheggubhiññā,",
  "anya-e0602n0:118": "Sabbālambaṅkurakaṃ sīlavaṇṭaṃ;",
  "anya-e0602n0:119": "Sesādhammā madhupakkapphalāni,",
  "anya-e0602n0:120": "Raṃsīchallī sutacā lakkhaṇāni.",
  "anya-e0602n0:121": "32.",
  "anya-e0602n0:122": " Chāyupagā suṃ puthunaradevā,",
  "anya-e0602n0:123": "Mārajidīpaṅkara mahijātaṃ;",
  "anya-e0602n0:124": "Patthatanantañca kusalabījaṃ,",
  "anya-e0602n0:125": "Ekaruhaṃ pādapamuni vande.",
  "anya-e0602n0:126": "33.",
  "anya-e0602n0:127": " Māratitthiyaripuṃ tamañca yo,",
  "anya-e0602n0:128": "Dhaṃsayaṃ nagaradhamma māpayaṃ;",
  "anya-e0602n0:129": "Sīlanīvaraṇa dvārakoṭṭhakaṃ,",
  "anya-e0602n0:130": "Esikāparamasaddha muttamaṃ.",
  "anya-e0602n0:131": "34.",
  "anya-e0602n0:132": " Dvārapālasuyataṃ satiṭālaṃ,",
  "anya-e0602n0:133": "Ñāṇacaccara sighāṭapadiddhiṃ;",
  "anya-e0602n0:134": "Dhammamaggakuṭisāla sahittaṃ,",
  "anya-e0602n0:135": "Dhammasenapatisārijabhūtaṃ.",
  "anya-e0602n0:136": "35.",
  "anya-e0602n0:137": " Dutiyasutaparohitaṃ mahā-",
  "anya-e0602n0:138": "Dhutaguṇadharamaggha dassikaṃ;",
  "anya-e0602n0:139": "Vinayacinaka dhammarakkhakaṃ,",
  "anya-e0602n0:140": "Tibhavapatika dhammarājiyaṃ.",
  "anya-e0602n0:141": "36.",
  "anya-e0602n0:142": " Sutaṃ sutaṃ sabbadhi sajjanaṃjanaṃ,",
  "anya-e0602n0:143": "Mitaṃ mitaṃ nantaguṇālayaṃ layaṃ;",
  "anya-e0602n0:144": "Hutaṃ hutaṃ jantunamānamaṃ namaṃ,",
  "anya-e0602n0:145": "Bhave bhave tebhavamaṅgalaṃ galaṃ.",
  "anya-e0602n0:146": "37.",
  "anya-e0602n0:147": " Lokābhirāmaṃ ramaṇeyyaveduraṃ,",
  "anya-e0602n0:148": "Lokantaguṃ antubhayānupāgataṃ;",
  "anya-e0602n0:149": "Lokaddhajaṃ mānadhajappahārakaṃ,",
  "anya-e0602n0:150": "Lokaggaruṃ aggaru paccaye name.",
  "anya-e0602n0:151": "38.",
  "anya-e0602n0:152": " Makuṭaggaphalaṃ nayanañcanikaṃ,",
  "anya-e0602n0:153": "Savanabbhusanaṃ vadanabbhusanaṃ;",
  "anya-e0602n0:154": "Galamaṇḍanamiddhi manaññurasaṃ,",
  "anya-e0602n0:155": "Kiriyaññudaraṃ dvikhaṇaññukaraṃ.",
  "anya-e0602n0:156": "39.",
  "anya-e0602n0:157": " Kaṭivibhūsana majjhimaññaṇakaṃ,",
  "anya-e0602n0:158": "Dayavilepana dhāraṇamaṇḍanaṃ;",
  "anya-e0602n0:159": "Paṭakhilaññunivattha manuttaraṃ,",
  "anya-e0602n0:160": "Munimaruttama meka mahaṃ name.",
  "anya-e0602n0:161": "40.",
  "anya-e0602n0:162": " Sativara sucakaṃ ibbhaggapaññaṃ,",
  "anya-e0602n0:163": "Suvīriyavasuvāhaṃ pītiselaṃ;",
  "anya-e0602n0:164": "Gahapatisamathaggaṃ thīpasaddhiṃ,",
  "anya-e0602n0:165": "Asaṇiyasunupekkhaṃ sattabhogaṃ.",
  "anya-e0602n0:166": "41.",
  "anya-e0602n0:167": " Catudisikiddhippada masahāyaṃ,",
  "anya-e0602n0:168": "Suparivutaṃ khattiyavirajānaṃ;",
  "anya-e0602n0:169": "Suciparisaṃ devanara manāpaṃ,",
  "anya-e0602n0:170": "Dasabalacakkādhipati bhivande.",
  "anya-e0602n0:171": "42.",
  "anya-e0602n0:172": " Samādhibbahiddhaṃ saticchaṭṭhaselaṃ,",
  "anya-e0602n0:173": "Virappañcamā jīvamajjhaṃ sukamma-",
  "anya-e0602n0:174": "Ttatiyaṃ suvācādutiyaṃ bhiseṭṭhaṃ,",
  "anya-e0602n0:175": "Samātakkapubbañca sattappavāraṃ.",
  "anya-e0602n0:176": "43.",
  "anya-e0602n0:177": " Vividhañāṇapabhutibbasākaraṃ,",
  "anya-e0602n0:178": "Bahumahiddhika marūna māsayaṃ;",
  "anya-e0602n0:179": "Dhuṃvapabhājalitarāmaṇeyyakaṃ,",
  "anya-e0602n0:180": "Sugatanerunagarāja māname.",
  "anya-e0602n0:181": "44.",
  "anya-e0602n0:182": " Sīlajjalaṃ ratanadhamma mākaraṃ,",
  "anya-e0602n0:183": "Bhiññāviciṃ satikulaṭṭhi gambhiraṃ;",
  "anya-e0602n0:184": "Vitthiṇṇañāṇa mariyodajāsayaṃ,",
  "anya-e0602n0:185": "Aṭṭhambīdhacchariyakaṃ asandanaṃ.",
  "anya-e0602n0:186": "45.",
  "anya-e0602n0:187": " Bahunajjamosaraṇa mekarasaṃ,",
  "anya-e0602n0:188": "Durupaggamaṃ acitasambharinaṃ;",
  "anya-e0602n0:189": "Puthupotapuññavatameva name,",
  "anya-e0602n0:190": "Dvīpaduttamaṇṇava nadindavaraṃ.",
  "anya-e0602n0:191": "46.",
  "anya-e0602n0:192": " Abhiniharadhanuṃ guṇapāramiṃ,",
  "anya-e0602n0:193": "Naḷamatimanabājarahammukhā;",
  "anya-e0602n0:194": "Dhitisamitasarena sudhārayaṃ,",
  "anya-e0602n0:195": "Malama gagaṇa mekapavedanā.",
  "anya-e0602n0:196": "47.",
  "anya-e0602n0:197": " Yo pāvedhesiṃ aggamaggañca tūṇiṃ,",
  "anya-e0602n0:198": "Dhammālaṅkārabbamma mekabbalaṃ taṃ;",
  "anya-e0602n0:199": "Nettiṃsānantañāṇa gīrellimantaṃ,",
  "anya-e0602n0:200": "Sabbaññussāsaṃ iddhidaṇḍaṃ namāmi.",
  "anya-e0602n0:201": "48.",
  "anya-e0602n0:202": " Varatapavuṭṭhi subījakasaddhā,",
  "anya-e0602n0:203": "Matiyuganaṅgala hīrutapīsā;",
  "anya-e0602n0:204": "Susamatharajju satidvijatuttaṃ,",
  "anya-e0602n0:205": "Vīriyadurāvaha saccanidānaṃ.",
  "anya-e0602n0:206": "49.",
  "anya-e0602n0:207": " Vatisaṃvaraṃ soratamocanañcaṃ,",
  "anya-e0602n0:208": "Saraṇā nivattabbahanatthaṃ yassa;",
  "anya-e0602n0:209": "Amatapphalaṃ nekarasehupetaṃ,",
  "anya-e0602n0:210": "Sugataṃ mahākassaka mābhivande.",
  "anya-e0602n0:211": "50.",
  "anya-e0602n0:212": " Devaggo tidasapure varāsane yo,",
  "anya-e0602n0:213": "Devānaṃ janikapabhutinaṃ bhidhammaṃ;",
  "anya-e0602n0:214": "Bālakkova laḷayamācale timāsaṃ,",
  "anya-e0602n0:215": "Desesyā paravisayaṃ name ajeyyo.",
  "anya-e0602n0:216": "51.",
  "anya-e0602n0:217": " Mahāyaso vividhasubhappakāsakaṃ,",
  "anya-e0602n0:218": "Kurūsu yo amitaguṇo tamonudo;",
  "anya-e0602n0:219": "Parappavādahari subhānuyoginaṃ,",
  "anya-e0602n0:220": "Namāmi taṃ kathayi satippaṭhānakaṃ.",
  "anya-e0602n0:221": "52.",
  "anya-e0602n0:222": " Samathakapaliko sasnehasammāsati,",
  "anya-e0602n0:223": "Paramamatiginī savaṭṭiparakkamo;",
  "anya-e0602n0:224": "Sakalajutikaro sudhammapadīpako,",
  "anya-e0602n0:225": "Ima mupajalito jinena namāmahaṃ.",
  "anya-e0602n0:226": "53.",
  "anya-e0602n0:227": " Vigatagatamalaṃ malagatavigataṃ,",
  "anya-e0602n0:228": "Mahita hitamanaṃ manahitamahitaṃ;",
  "anya-e0602n0:229": "Vibhavabhavakaraṃ karabhavavibhavaṃ,",
  "anya-e0602n0:230": "Sujana janaguṇaṃ guṇajanasujanaṃ.",
  "anya-e0602n0:231": "54.",
  "anya-e0602n0:232": " Sīlaggadaṇḍavicitaṃ susamādhipattaṃ,",
  "anya-e0602n0:233": "Sobhāsamujjala manantaga ñāṇasīkhaṃ;",
  "anya-e0602n0:234": "Saddhammaseṭṭharatanañca tilokaketuṃ,",
  "anya-e0602n0:235": "Vandāmi locanabhiseka susobhayuttaṃ.",
  "anya-e0602n0:236": "55.",
  "anya-e0602n0:237": " Vinayanaya manayavinaya manamitaṃ,",
  "anya-e0602n0:238": "Vijayajaya majayavijaya matulitaṃ;",
  "anya-e0602n0:239": "Vibhajabhaja mabhajavibhaja mananakaṃ,",
  "anya-e0602n0:240": "Visamasama masamavisama mabhiname.",
  "anya-e0602n0:241": "56.",
  "anya-e0602n0:242": " Paramarama maramaparama matiguṇaṃ,",
  "anya-e0602n0:243": "Pagahagati magatipagata mamamakaṃ;",
  "anya-e0602n0:244": "Pacayacaya macayapapaya manaṇakaṃ,",
  "anya-e0602n0:245": "Pakatakata makatapakata macalakaṃ.",
  "anya-e0602n0:246": "57.",
  "anya-e0602n0:247": " Ujuka mayanamagge mokkhadesaṃ niyāsi,",
  "anya-e0602n0:248": "Vararathakujarena cammacakkena satthā;",
  "anya-e0602n0:249": "Hiritapadukapālambena dhammassutena,",
  "anya-e0602n0:250": "Satinivarayutena ppāṭihiraddhajena.",
  "anya-e0602n0:251": "58.",
  "anya-e0602n0:252": " Avihananakkhinā suyama nemupakkharā,",
  "anya-e0602n0:253": "Udariyamabbhinā paripuraṅgasaccinā;",
  "anya-e0602n0:254": "Kusalavibhūsinā nimadakupparena yo,",
  "anya-e0602n0:255": "Akharanatesinā gupitasilanandanā.",
  "anya-e0602n0:256": "59.",
  "anya-e0602n0:257": " Anusanughātinā matipurejavena kāla-",
  "anya-e0602n0:258": "Ññutamatisārike na ca visāradatthidaṇḍā;",
  "anya-e0602n0:259": "Satituda dhītirasmi manadammasindhavena,",
  "anya-e0602n0:260": "Vinayagaṇe namāmi ta matulyasatthavāhaṃ.",
  "anya-e0602n0:261": "60.",
  "anya-e0602n0:262": " Yamakkaggijālaṃ paravisaya maccherasahitaṃ,",
  "anya-e0602n0:263": "Dudiṭṭhandhubbāhaṃ yugagahaṇatitthīna makarī;",
  "anya-e0602n0:264": "Bahūnaṃ majjhe yo ratanakamane pāṭihariyaṃ,",
  "anya-e0602n0:265": "Jayakketussāpi ta mabhinami kaṇṭambasamipe.",
  "anya-e0602n0:266": "61.",
  "anya-e0602n0:267": " Nakhajutirajaṃ cakkaṅgopeta pādavarambujaṃ,",
  "anya-e0602n0:268": "Subhasirimato raṃsijālaṅgulidasasaṃsubhiṃ;",
  "anya-e0602n0:269": "Pavarasirasā devādevā sadā na pilandhayuṃ,",
  "anya-e0602n0:270": "Ta mativa manorammaṃ tittīkarā nami yassa ke.",
  "anya-e0602n0:271": "62.",
  "anya-e0602n0:272": " Buddhopyeko nidhanaguṇino vaṇṇaye yāvajīvaṃ,",
  "anya-e0602n0:273": "Kāmaṃ aññaṃ kathamabhaṇa māsuṃ khiyethā yukappo;",
  "anya-e0602n0:274": "Na tvevā yaṃ khaya mupavajje yassa vaṇṇo ananto,",
  "anya-e0602n0:275": "Taṃ sabbaññuṃ sakalarirī nekanāthaṃ namāmi.",
  "anya-e0602n0:276": "63.",
  "anya-e0602n0:277": " Pādidīpādaṃ dvinayanadijaṃ dhammakāyaṃ dhisoṇḍaṃ,",
  "anya-e0602n0:278": "Bhāṇīsoṇḍaggaṃ saraṇasirasiṃ maggāvālaṃ subhaṅgaṃ;",
  "anya-e0602n0:279": "Sīlālaṅkāraṃ vimalibhavu taṃ sattatiṭṭhidhidabbaṃ,",
  "anya-e0602n0:280": "Nāthebhindaggaṃ phalakariṇukaṃ mokkhabhojaṃ namāmi.",
  "anya-e0602n0:281": "64.",
  "anya-e0602n0:282": " Malāloḷullolaṃ atibhayajanaṃ duggasaṃsārasinduṃ,",
  "anya-e0602n0:283": "Phiyabbhāniggāho sivataṭamukho nāvi kajjeṭṭhanātho;",
  "anya-e0602n0:284": "Padappārakkāmaṃ bahujanagaṇaṃ ekamaggattaramhi,",
  "anya-e0602n0:285": "Samāropetvā mattari ta matulasādarañcā bhivande.",
  "anya-e0602n0:286": "65.",
  "anya-e0602n0:287": " Byāmaṃsugghanadhāra makkuḷusatabbhāṇujjalantattanaṃ,",
  "anya-e0602n0:288": "Ukkaṃsajjuti ketumālavicitaṃ saddhammajotindharaṃ;",
  "anya-e0602n0:289": "Bundinniggatapajjalanta didhitiṃ ajjatthanā yāva ca,",
  "anya-e0602n0:290": "Vandetaṃ muni sakyapuṅgava mahaṃ puṇṇinduvattampi ca.",
  "anya-e0602n0:291": "66.",
  "anya-e0602n0:292": " Sattamaṃtamaṃ vināsakaṃsakaṃ dadaṃ vineyyakānameva,",
  "anya-e0602n0:293": "Bhāvanaṃvanaṃ dhulīkaraṃ karaṃ tidukkaraṃ pajābhibhuñja;",
  "anya-e0602n0:294": "Gāravaṃravaṃ manoharaṃharaṃ narānarānayaṃ namāmi,",
  "anya-e0602n0:295": "Sādaraṃdaraṃ vinodakaṃdakaṃ pavassakaṃ pajānamiva.",
  "anya-e0602n0:296": "67.",
  "anya-e0602n0:297": " Buddho nigrodhabimbo mudukaracaraṇo brahmaghoseṇijaṅgho,",
  "anya-e0602n0:298": "Kosacchādaṅgajāto punarapi sugato suppatiṭṭhitapādo;",
  "anya-e0602n0:299": "Mudodātuṇṇalomo athamapi sugato brahmujuggattabhāvo,",
  "anya-e0602n0:300": "Nīlakkhī dīghapaṇhī sukhumamalachavī thomyarassaggasaggī.",
  "anya-e0602n0:301": "68.",
  "anya-e0602n0:302": " Cattālīsaggadanto samakalapanajo antaraṃsappapīṇo,",
  "anya-e0602n0:303": "Cakkenaṅkītapādo aviraḷadasano mārajussaṅkhapādo;",
  "anya-e0602n0:304": "Tiṭṭhantonomento bhayakaramudunā jaṇṇukānā masanto,",
  "anya-e0602n0:305": "Vaṭṭakkhandho jino gotaruṇapakhumako sīhapubbaḍḍhukāyo.",
  "anya-e0602n0:306": "69.",
  "anya-e0602n0:307": " Sattappīṇo ca dīghaṅgulaṃ matha sugato lomakūpekalomo,",
  "anya-e0602n0:308": "Sampannodātadāṭho kanakasamataco nīlamuddhaggalomo;",
  "anya-e0602n0:309": "Sambuddho thūlajivho atha sīhahanuko jālikappādahattho,",
  "anya-e0602n0:310": "Nātho uṇhīsasīso iti guṇasahitaṃ taṃ mahesiṃ namāmi.",
  "anya-e0602n0:311": "70.",
  "anya-e0602n0:312": " Vaṭṭacitānupubbakasubhaṅgulī ruhiramaṭṭhatuṅganakhako,",
  "anya-e0602n0:313": "Nigguḷagopphako samapado sīhosabhibha haṃsasannibhakamo;",
  "anya-e0602n0:314": "Dakkhiṇatāvatakkami samantamaṇḍala nigaṇṭhi jāṇusubhako,",
  "anya-e0602n0:315": "Byañjanapuṇṇaposatanu nābhigambhīra achiddadakkhiṇavaṭo.",
  "anya-e0602n0:316": "71.",
  "anya-e0602n0:317": " Dviradakarappakāsurubhujo suvibbhajanupubbamaṭṭhaanunā-",
  "anya-e0602n0:318": "Nunaalinānupubbarucira ttilādirahitabbisuddhatanuko;",
  "anya-e0602n0:319": "Dasasatakoṭi hatthibaladhāraṇo kanakatuṅganāsikasubho,",
  "anya-e0602n0:320": "Suruhiradantamaṃsatha sucisiniddhadasano tha lokasaraṇo.",
  "anya-e0602n0:321": "72.",
  "anya-e0602n0:322": " Suddhapasādindri ca vaṭṭataradāṭho ruhiroṭṭha ca suranaranātho,",
  "anya-e0602n0:323": "Āyatasobhabbadano tha muni gambhīrujukāyatasuruciralekho;",
  "anya-e0602n0:324": "Byāmapabhāmaṇḍalabundi supuraggaṇṇi ca āyatavisaṭasubhakkhī,",
  "anya-e0602n0:325": "Pañcapasādakkhi ca kuñcikasubhaggapakhumo mudutanuruṇajivho.",
  "anya-e0602n0:326": "73.",
  "anya-e0602n0:327": " Sommasiniddha tyujjalakomala varuṇavimalatanu ca amitaguṇo,",
  "anya-e0602n0:328": "Komala dakkhiṇāvaṭa añjanabhidasarisanilaka mudutanuruho;",
  "anya-e0602n0:329": "Dakkhiṇavaṭṭakomala saṇusamasunila alulita siraruhi jino,",
  "anya-e0602n0:330": "Sobhaṇasaṇṭhāno tha siniddhasiraruhi ca supacitasatakusala jo.",
  "anya-e0602n0:331": "74.",
  "anya-e0602n0:332": " Nigguḷonigganticchattassarisaatisubhagasira cāyatāruci kaṇṇako,",
  "anya-e0602n0:333": "Sosaṇṭhānassaṇhāhārānukamapahutabhamutha suāyatabbhamuko ca so;",
  "anya-e0602n0:334": "Suggandhaggatto muddhicātha vadani ca puthulakanalāṭa āyatasobhaṇo,",
  "anya-e0602n0:335": "Assāsappassāsātissaṇu dharamasamasama nami ketumālavicittakaṃ.",
  "anya-e0602n0:336": "75.",
  "anya-e0602n0:337": " Buddhuppādo kimaṅgaṃ atidulabhataraṃ ghosamattampi loke,",
  "anya-e0602n0:338": "Tasmā nānappakāraṃ saparahitasukhaṃ viddhasū patthayantā;",
  "anya-e0602n0:339": "Yātiṭṭhatthāva haṃ taṃ suranarasaraṇaṃ antarāyappahānaṃ,",
  "anya-e0602n0:340": "Puññakkhettekabhūtaṃ sugatamavirataṃ sādhu vandantu santo.",
  "anya-e0602n0:341": "76.",
  "anya-e0602n0:342": " Khettavaraṅgatatthutipure javapaṇama tejasā idha bhave,",
  "anya-e0602n0:343": "Rogabhayādyupaddavahato anunasukha bhogapuññamatiko;",
  "anya-e0602n0:344": "Devamanussabhogapavaraṃ paratthanubhāvañca antimabhave,",
  "anya-e0602n0:345": "Aññataro tibodhipavare bhavissati yathāsayaṃ katanato.",
  "anya-e0602n0:346": "77.",
  "anya-e0602n0:347": " Puññenānena sohaṃ nipuṇajavamati pemavāco sakhīlo,",
  "anya-e0602n0:348": "Saddho kalyāṇamittotisaraṇagamano sīlavā cāgayogo;",
  "anya-e0602n0:349": "Hirottappī sudakkho avitasucarito dhitimā saccabhāṇī,",
  "anya-e0602n0:350": "Bāhussacci vibhāgi saparahitakaro vaggurāvo bhirupo.",
  "anya-e0602n0:351": "78.",
  "anya-e0602n0:352": " Dīghajjīvi nirogo sucikulapassuto dhammaratto viratto,",
  "anya-e0602n0:353": "Niccāpalyo kataññu atimudujumano sādhubhāvādiviññū;",
  "anya-e0602n0:354": "Dhammājīvo bhaveyyaṃ bahukusalarato appakodho aluddho,",
  "anya-e0602n0:355": "Evañcaññaṃ kareyyaṃ paṇidhi carimake mokkhanibbānabhāgī.",
  "anya-e0602n0:356": "79.",
  "anya-e0602n0:357": " (1) Mahākathaṃ buddhaghoso, tanumeva karaṃapi;",
  "anya-e0602n0:358": "Cajaṃ heyyā diyā deyyaṃ, akarittha yathā tathā.",
  "anya-e0602n0:359": "80.",
  "anya-e0602n0:360": " (2) Mahāpaṇāmaporāṇaṃ, kiñci eva punappunaṃ;",
  "anya-e0602n0:361": "Kāmokkamaṃ dudhārañca, cajaṃ deyyā diyaññattha.",
  "anya-e0602n0:362": "81.",
  "anya-e0602n0:363": " (3) Sutajjaya anubhava-ṭṭhapanatthena lañchinā;",
  "anya-e0602n0:364": "Sutena garunānena, katoyaṃ paṇāmo navo.",
  "anya-e0602n0:365": "82.",
  "anya-e0602n0:366": " (4) Ekakkharāya gāthāyo, yāva chabbisatakkharā;",
  "anya-e0602n0:367": "Jātiya pajjasattatyā, saṅkhato caturādhikā.",
  "anya-e0602n0:368": "83.",
  "anya-e0602n0:369": " (5) Aṭṭhādhikā sahevuyyo- janādīhi midaṃ nataṃ;",
  "anya-e0602n0:370": "Yathāvuttatthakā kāmā, ye niccaṃ dhārayantu te.",
  "anya-e0602n0:371": "84.",
  "anya-e0602n0:372": " Rājātirājātimanoharo yo,",
  "anya-e0602n0:373": "Devātidevātiguṇoghadhārī;",
  "anya-e0602n0:374": "Brahmātibrahmātibhavantagū taṃ,",
  "anya-e0602n0:375": "Saṅghātisaṅghātivirāva vande.",
  "anya-e0602n0:376": "85.",
  "anya-e0602n0:377": " Anaṅganaṅgaṃ naradevadevaṃ,",
  "anya-e0602n0:378": "Aniñjaniñjaṃ bhayatāṇatāṇaṃ;",
  "anya-e0602n0:379": "Anaṇḍanaṇḍañca anāthanāthaṃ,",
  "anya-e0602n0:380": "Khayantayantaṃ paṇamāmi māmi.",
  "anya-e0602n0:381": "86.",
  "anya-e0602n0:382": " Tambasiniddhatuṅganakhako nuṃvaṭṭasucituraṅguli ca muniso,",
  "anya-e0602n0:383": "Sīhusabhobhahaṃsasamago nigūḷasama gopphakāyatamukho;",
  "anya-e0602n0:384": "Komaladakkhāṇāvaṭatanuruho sucimalujjalābhasariro,",
  "anya-e0602n0:385": "Pañcapasādayuttanayano sugandhamukhatuṅganāsikayuto.",
  "anya-e0602n0:386": "87.",
  "anya-e0602n0:387": " Koṭisahassanāgabaliko surattamadharo suvaṭṭadasano,",
  "anya-e0602n0:388": "Āyatasaṇulomabhamūko muduttanukaratta jivhasahito;",
  "anya-e0602n0:389": "Chattasamānasobhaṇasiro sukesavara ketumālavicito,",
  "anya-e0602n0:390": "Iccanubyañjanebhi sahitaṃ munindapavaraṃ namāmi sirasā.",
  "anya-e0602n0:391": "88.",
  "anya-e0602n0:392": " Sakalamalehi so muni sudūratāya ca malāriniṃ hatatayā,",
  "anya-e0602n0:393": "Tibhavarathe samānitamanārakāni ca namālayo naravaro;",
  "anya-e0602n0:394": "Malakaraṇe rahāraha manantañeyya mabhijānanā muni tathā,",
  "anya-e0602n0:395": "Caraṇayuto tivijji ca suvācatā sugamanā janesu sugato.",
  "anya-e0602n0:396": "89.",
  "anya-e0602n0:397": " Lokavidū so nitalokatayatā sākalato asamanaradamā so,",
  "anya-e0602n0:398": "Sārathi jino anusāsanakaro satthavaho dupathataraṇasattā;",
  "anya-e0602n0:399": "Bujjhati sāmaṃ catusaccamakhilaṃ bodhayi jantugaṇamiti ca buddho,",
  "anya-e0602n0:400": "Bhākaraābhāphuṭapaṅkajasamo maggiyañāṇaphuvikasito ca.",
  "anya-e0602n0:401": "90.",
  "anya-e0602n0:402": " Bhaggakileso so bhagavā tibhava vamita gamana sujana bhajanato,",
  "anya-e0602n0:403": "So bhaji saddhamme pavibhatta sarasa chabhagayuta garukaraṇiyato;",
  "anya-e0602n0:404": "Sattanikāye kenapitulyaguṇamapamita sirighaṃnajutisusubhaṃ,",
  "anya-e0602n0:405": "Devanarānaṃ ekapatiṭṭha mavitathutiyasa masaki mabhaṃname.",
  "anya-e0602n0:406": "91.",
  "anya-e0602n0:407": " Buddhuppādo kimmaṅgaṃ bho atidulabhataramidha bhave sughosa mapāparo,",
  "anya-e0602n0:408": "Tasmā patthentā sabbaññuṃ vividhahitasukha manadhikaṃ namantu ca sādhavo;",
  "anya-e0602n0:409": "Puññenānenete diṭṭhe bhayaaghaṃpīḷanaṭṭha virahitā parattha cubho subhe,",
  "anya-e0602n0:410": "Bhutvānante ve hessante avikalasukhasirimatikā anuttara bhāgino.",
  "anya-e0602n0:411": "92.",
  "anya-e0602n0:412": " So cakkopetapādo mudubhujacaraṇo suppatiṭṭhitapādo,",
  "anya-e0602n0:413": "Eṇījaṅgho ca buddho kanakanibhataco āyatapaṇhi nātho;",
  "anya-e0602n0:414": "Kosonaddhaṅgajāto atisudhumachavī jālikappānaheṭṭhā,",
  "anya-e0602n0:415": "Ussaṅkhapādayutto abhinilanayano āyataṅguliyogo.",
  "anya-e0602n0:416": "93.",
  "anya-e0602n0:417": " Ṭhito kho no namanto kirubhayaputhunājāṇuyo āmasanto,",
  "anya-e0602n0:418": "Lomakūpekekalomo samataladasano añjanuddhaggalomo;",
  "anya-e0602n0:419": "Brahmaddehujjugatto aviraḷamukhato sattakaṅgussado so,",
  "anya-e0602n0:420": "Nigrodhappāribimbo migapatihanuko sīhapubbaḍḍhakāyo.",
  "anya-e0602n0:421": "94.",
  "anya-e0602n0:422": " Puṇṇattālīsadanto supahutarasano sobhaṇodātadāṭho,",
  "anya-e0602n0:423": "Saṇhodātuṇṇalomo samavaṭalagalo antaraṃsapiṇo so;",
  "anya-e0602n0:424": "Brahmagghoso munindo punapi gupakhumo uṇhisasamphullasīso,",
  "anya-e0602n0:425": "Bāttiṃsaṅgopasobhaṃ mudurasahaṇī lokajeṭṭhaṃ name taṃ.",
  "anya-e0602n0:426": "Mahāpaṇāma niṭṭhitā.",
  "anya-e0602n0:427": "Tigumbacetiya thomanā",
  "anya-e0602n0:428": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n0:429": "1.",
  "anya-e0602n0:430": " Yo dīpaṅkaramūlamhi, padaṃ hattagataṃ caji;",
  "anya-e0602n0:431": "Sammāsambodhi mākaṅkhaṃ, vande tassa siroruhaṃ.",
  "anya-e0602n0:432": "(Pathyāvattagāthā).",
  "anya-e0602n0:433": "2.",
  "anya-e0602n0:434": " Pūretvā bodhisambhāra-mahesaṃ yo anuttaraṃ;",
  "anya-e0602n0:435": "Alattha buddhattaṃ tassa, kesadhātuvaraṃ name.",
  "anya-e0602n0:436": "(Pathyāvattagāthā).",
  "anya-e0602n0:437": "3.",
  "anya-e0602n0:438": " Laddhā buddhattaṃ chaṭhāna-matikkamma pavedayi;",
  "anya-e0602n0:439": "Vimuttiṃ rājāyatane, tassa kesavaraṃ name.",
  "anya-e0602n0:440": "(Rakāra bhakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:441": "4.",
  "anya-e0602n0:442": " Tattha sakkadattiyampi, nāgalataṃ harītakaṃ;",
  "anya-e0602n0:443": "Anotattodakaṃ bhuñji, vande tassa siroruhaṃ.",
  "anya-e0602n0:444": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:445": "5.",
  "anya-e0602n0:446": " Tadā muggaselapattaṃ, mahārājūhi dinnakaṃ;",
  "anya-e0602n0:447": "Tathāgato paṭiggaṇhi, vandāmi tassa sīsajaṃ.",
  "anya-e0602n0:448": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:449": "6.",
  "anya-e0602n0:450": " Tadā dvinnaṃ dvebhātika-janehi madhupiṇḍikaṃ;",
  "anya-e0602n0:451": "Paribhuñjesi manthampi, tassa sīsasiriṃ name.",
  "anya-e0602n0:452": "(Takāravipulā pathyāvattagāthā).",
  "anya-e0602n0:453": "7.",
  "anya-e0602n0:454": " Yo tapussabhallikānaṃ, tadā dvisaraṇaṃ adā;",
  "anya-e0602n0:455": "Lokamhi sabbapaṭhamaṃ, tassa sīrivahaṃ name.",
  "anya-e0602n0:456": "(Rakāra nakāra vipulāpathyāvattagāthā).",
  "anya-e0602n0:457": "8.",
  "anya-e0602n0:458": " Tadā tatthupaṭṭhakānaṃ, tesaṃ kese adā aṭha;",
  "anya-e0602n0:459": "Lokahita mapekkhanto, nātho yo tassa te name.",
  "anya-e0602n0:460": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:461": "9.",
  "anya-e0602n0:462": " Tepi taṃ āhāritvāna, pokkharabbatiyaṃ karuṃ;",
  "anya-e0602n0:463": "Sajīvakesa cetiyaṃ, nametaṃ sabbapubbakaṃ.",
  "anya-e0602n0:464": "(Makāravipulā pathyāvattagāthā).",
  "anya-e0602n0:465": "10.",
  "anya-e0602n0:466": " Uposathuposathamhi, muñcantaṃ nīlarasmiyo;",
  "anya-e0602n0:467": "Bhagavāva lokaatthaṃ, karontaṃ taṃ sadā name.",
  "anya-e0602n0:468": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:469": "11.",
  "anya-e0602n0:470": " Cūḷāmaṇidussacetyaṃ, kālamhi bodhisattake;",
  "anya-e0602n0:471": "Buddhakāle idaṃ sabba-paṭhamaṃ taṃ namāmahaṃ.",
  "anya-e0602n0:472": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:473": "12.",
  "anya-e0602n0:474": " Namāmahaṃ vandāmahaṃ, pūjemahaṃ siroruhaṃ;",
  "anya-e0602n0:475": "Puññamidaṃ bhavatu me, paccayo āsavakkhaye.",
  "anya-e0602n0:476": "(Takāra nakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:477": "Tigumbacetiyathomanā niṭṭhitā.",
  "anya-e0602n0:478": "Vāsamālinīkya",
  "anya-e0602n0:479": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n0:480": "1.",
  "anya-e0602n0:481": " Vuḍḍhopi jinānaṃ, buddhosi vijānaṃ;",
  "anya-e0602n0:482": "Pubboditi māhaṃ, kubbomi vimānaṃ.",
  "anya-e0602n0:483": "(Tanumajjhāgāthā)",
  "anya-e0602n0:484": "2.",
  "anya-e0602n0:485": " Mahāsamatakūlaṃ, narāpavarapūjaṃ;",
  "anya-e0602n0:486": "Jahā abhayapūraṃ, namā kanakarūpaṃ.",
  "anya-e0602n0:487": "(Kumāralalitāgāthā)",
  "anya-e0602n0:488": "3.",
  "anya-e0602n0:489": " Narāsabhasubuddhaṃ, pajāmatanuruttaṃ;",
  "anya-e0602n0:490": "Dayākaramuduttaṃ, namāma ha usukkaṃ.",
  "anya-e0602n0:491": "(Kumāralalitāgāthā)",
  "anya-e0602n0:492": "4.",
  "anya-e0602n0:493": " Hitaṃ vahasusīlo, pamodati sukhatte;",
  "anya-e0602n0:494": "Name tamapabuddhaṃ, jinaṃ gatasukhantaṃ.",
  "anya-e0602n0:495": "(Kumāralalitāgāthā)",
  "anya-e0602n0:496": "5.",
  "anya-e0602n0:497": " Bandhu ca santakileso, yo pitavaṇṇapabhāso;",
  "anya-e0602n0:498": "Gotamagottasuññato, tassa namo narasīho.",
  "anya-e0602n0:499": "(Citrapadāgāthā)",
  "anya-e0602n0:500": "6.",
  "anya-e0602n0:501": " Buddhaṃ suddhaṃ lokesītaṃ, ukkaṃ yuttaṃ yoge haṃ;",
  "anya-e0602n0:502": "Vantātītaṃ oghe sīdaṃ, vandāpīhaṃ sokehīhaṃ.",
  "anya-e0602n0:503": "(Vijjummālāgāthā)",
  "anya-e0602n0:504": "7.",
  "anya-e0602n0:505": " Bhogavatī yopakhamī, sītadayā lokasakhā;",
  "anya-e0602n0:506": "Dhātutaye kitti sa ve, dātu jaye-tassa ca me;",
  "anya-e0602n0:507": "(Māṇavakagāthā)",
  "anya-e0602n0:508": "8.",
  "anya-e0602n0:509": " Mānito lukho rutotha, sannibho subho sukho ca;",
  "anya-e0602n0:510": "Jānito dharo namo ca, tassa yo thuto guṇova.",
  "anya-e0602n0:511": "(Samānikāgāthā)",
  "anya-e0602n0:512": "9.",
  "anya-e0602n0:513": " Jayaṃ dhajaṃ pajāpuge, ṭhitaṃ lilaṃ mahāsukhe;",
  "anya-e0602n0:514": "Subhaṃ phuṭaṃ pabhaṃ name, hitaṃ sukhaṃ dadātu me.",
  "anya-e0602n0:515": "(Pamāṇikāgāthā)",
  "anya-e0602n0:516": "10.",
  "anya-e0602n0:517": " Puṇṇapuññajanitasubhaṃ, jātiñātithutiyaguṇaṃ;",
  "anya-e0602n0:518": "Bhedaveravimalajinaṃ, ñāṇapādacaraṇa-mahaṃ.",
  "anya-e0602n0:519": "(Halamukhīgāthā)",
  "anya-e0602n0:520": "11.",
  "anya-e0602n0:521": " Sati mati suci yo-bhāso, thuti muni sukhito kāyo;",
  "anya-e0602n0:522": "Manujapumasuto nātho, jayavara mu-sabho dāto.",
  "anya-e0602n0:523": "(Bhujagasusugāthā)",
  "anya-e0602n0:524": "12.",
  "anya-e0602n0:525": " Yo buddho pavaro lilo puge,",
  "anya-e0602n0:526": "Lokutto abhayo ṭhito sukhe;",
  "anya-e0602n0:527": "Uttiṇṇaṃ nisabhaṃ hitaṃ vahe,",
  "anya-e0602n0:528": "Monindaṃ vimalaṃ jinaṃ name.",
  "anya-e0602n0:529": "(Suddhavirājitagāthā)",
  "anya-e0602n0:530": "13.",
  "anya-e0602n0:531": " Devindaṃ varagaṇatherindaṃ,",
  "anya-e0602n0:532": "Niṭṭhānaṃ bhavajananibbānaṃ;",
  "anya-e0602n0:533": "Niddosaṃ raṇarajanipphoṭaṃ,",
  "anya-e0602n0:534": "Vande-haṃ subhamukhasoṇṇemaṃ.",
  "anya-e0602n0:535": "(Paṇavagāthā)",
  "anya-e0602n0:536": "14.",
  "anya-e0602n0:537": " Gotamagotte ketuva ñātaṃ,",
  "anya-e0602n0:538": "Lokajakhette meruva jātaṃ;",
  "anya-e0602n0:539": "Thandilajeṭṭhe bheditamāraṃ,",
  "anya-e0602n0:540": "Paṇḍitamajjhe medhiva bhāṇaṃ;",
  "anya-e0602n0:541": "Mantiya vande sevitanāthaṃ.",
  "anya-e0602n0:542": "(Rummavatīgāthā)",
  "anya-e0602n0:543": "15.",
  "anya-e0602n0:544": " Buddho sukko amitaguṇīso,",
  "anya-e0602n0:545": "Yutto mutto sasiva timīto;",
  "anya-e0602n0:546": "Khe yo tejo tapasiva akko,",
  "anya-e0602n0:547": "Phelo theto tava namakāro.",
  "anya-e0602n0:548": "(Mattāgāthā)",
  "anya-e0602n0:549": "16.",
  "anya-e0602n0:550": " Yo jitamāre ve aji sabbaṃ,",
  "anya-e0602n0:551": "Tho mitasāre he-dhitapattaṃ;",
  "anya-e0602n0:552": "Saṃsitapuṇṇo so nami tassa,",
  "anya-e0602n0:553": "Paṇḍitaphullo so matikassa.",
  "anya-e0602n0:554": "(Campakamālāgāthā)",
  "anya-e0602n0:555": "17.",
  "anya-e0602n0:556": " Kanakarūpa mūpameyyakaṃ,",
  "anya-e0602n0:557": "Pavarasūra pūjasevataṃ;",
  "anya-e0602n0:558": "Kamalabhūma dhūradesakaṃ,",
  "anya-e0602n0:559": "Naramarūpa rū name ta-haṃ.",
  "anya-e0602n0:560": "(Manoramāgāthā)",
  "anya-e0602n0:561": "18.",
  "anya-e0602n0:562": " Deve gate dvevārā gamāsi,",
  "anya-e0602n0:563": "Sele cale ye ñātā pacāyi;",
  "anya-e0602n0:564": "Uddhaṃ tale tevāsaṃ akāsi,",
  "anya-e0602n0:565": "Buddhaṃ mate esāhaṃ namāmi.",
  "anya-e0602n0:566": "(Ubbhāsakantagāthā)",
  "anya-e0602n0:567": "19.",
  "anya-e0602n0:568": " Ukke sunutaṃ puthukañca theraṃ,",
  "anya-e0602n0:569": "Vutte sukhumaṃ ujukaṃ tathetaṃ;",
  "anya-e0602n0:570": "Dibbe paṭimaṃ kiriyaṃ vadetaṃ,",
  "anya-e0602n0:571": "Iddhe mahitaṃ kathitaṃ namehaṃ.",
  "anya-e0602n0:572": "(Upaṭṭhitagāthā)",
  "anya-e0602n0:573": "20. Dibbassa pūre pavarehi gutto,",
  "anya-e0602n0:574": "Siddhattha bhūte nagarehi vuṭṭho;",
  "anya-e0602n0:575": "Saṅkassa pūre ma-gaṇehi buddho,",
  "anya-e0602n0:576": "Aññattha pūje paname ni kubbo.",
  "anya-e0602n0:577": "(Indavajirāgāthā)",
  "anya-e0602n0:578": "21.",
  "anya-e0602n0:579": " Subhaṃ thutaṃ yo rajataṃ balatthaṃ,",
  "anya-e0602n0:580": "Yugaṃ hutaṃ so kanakaṃ kamatthaṃ;",
  "anya-e0602n0:581": "Citaṃ ṭhitaṃ lohitakaṃ manāpaṃ,",
  "anya-e0602n0:582": "Lilaṃ itaṃ soraci taṃ namāhaṃ.",
  "anya-e0602n0:583": "(Upendavajirāgāthā)",
  "anya-e0602n0:584": "22.",
  "anya-e0602n0:585": " Pinitaṃ viṇaṃ sakhilaṃ yaji taṃ,",
  "anya-e0602n0:586": "Susukhaṃ dhujaṃ biluvaṃ niyutaṃ;",
  "anya-e0602n0:587": "Ṭhapiyaṃ simaṃ thunutaṃ puthulaṃ,",
  "anya-e0602n0:588": "Nami haṃ khiṇaṃ sukhumaṃ mudukaṃ.",
  "anya-e0602n0:589": "(Sumukhīgāthā)",
  "anya-e0602n0:590": "23.",
  "anya-e0602n0:591": " Sogati bodhayiṃ gāhiya pattaṃ,",
  "anya-e0602n0:592": "Otari sonami jānita atthaṃ;",
  "anya-e0602n0:593": "Bhūpati pūjayi sākiya vaṃsaṃ,",
  "anya-e0602n0:594": "Sūjadhi ūpadhi bhāsita dhammaṃ.",
  "anya-e0602n0:595": "(Dodhakagāthā)",
  "anya-e0602n0:596": "24.",
  "anya-e0602n0:597": " Cattāro-me yācite so pavutthe,",
  "anya-e0602n0:598": "Laddhā bhoge kāmite oghamutte;",
  "anya-e0602n0:599": "Kattā tose-taṃ name colayutte,",
  "anya-e0602n0:600": "Tatthā-loke taṃpate kho padukke.",
  "anya-e0602n0:601": "(Sālinīgāthā)",
  "anya-e0602n0:602": "25.",
  "anya-e0602n0:603": " Sattā-loko sarito yo dhajukkaṃ,",
  "anya-e0602n0:604": "Tatthā-gopo raciyo-noja-muddhaṃ;",
  "anya-e0602n0:605": "Bhaddā-soko-pacito-bho pabuddhaṃ,",
  "anya-e0602n0:606": "Saddhāyogo bhaji so-ho-namuccaṃ.",
  "anya-e0602n0:607": "(Vātompīgāthā)",
  "anya-e0602n0:608": "26.",
  "anya-e0602n0:609": " Ñātamarūnaṃ upari ṭhitānaṃ,",
  "anya-e0602n0:610": "Vālapasūkaṃ huvati jinānaṃ;",
  "anya-e0602n0:611": "Devasuyāmo jinamiti ñāto,",
  "anya-e0602n0:612": "Tena sukhā-bho vinami idā so.",
  "anya-e0602n0:613": "(Sirīgāthā)",
  "anya-e0602n0:614": "27.",
  "anya-e0602n0:615": " Puṇṇakena kusumena sevataṃ,",
  "anya-e0602n0:616": "Kuñjareva thunutena khe gataṃ;",
  "anya-e0602n0:617": "Sundarena nami tena me jayaṃ,",
  "anya-e0602n0:618": "Puññatejakari-dhesa ve dadaṃ.",
  "anya-e0602n0:619": "(Rathoddhatāgāthā)",
  "anya-e0602n0:620": "28.",
  "anya-e0602n0:621": " Mātu āyu khiṇu-ke iha pubbe,",
  "anya-e0602n0:622": "Tāsu sādhu visute-disakucce;",
  "anya-e0602n0:623": "Vāta tāla khaciteni-dha soṇṇe,",
  "anya-e0602n0:624": "‘‘Tāta tāta’’ yaji te-tisa vande.",
  "anya-e0602n0:625": "(Svāgatagāthā)",
  "anya-e0602n0:626": "29.",
  "anya-e0602n0:627": " Upari kamalayoni sobhitaṃ,",
  "anya-e0602n0:628": "Juhati dhavalajoti-dositaṃ;",
  "anya-e0602n0:629": "Sukari ya-matabodhi-mocitaṃ,",
  "anya-e0602n0:630": "Sunami caraṇaloki-dho-rimaṃ.",
  "anya-e0602n0:631": "(Bhaddikāgāthā)",
  "anya-e0602n0:632": "30.",
  "anya-e0602n0:633": " Vane jino yo vinayaṃ supekkhi-maṃ,",
  "anya-e0602n0:634": "Mate ṭhito-bho dijakaṃ dubajjitaṃ;",
  "anya-e0602n0:635": "Aghe-nidho khobhi-taraṃ mune-cchi-daṃ,",
  "anya-e0602n0:636": "Name-bhito bodhimahaṃ lukha-jjhitaṃ.",
  "anya-e0602n0:637": "(Vaṃsaṭṭhagāthā)",
  "anya-e0602n0:638": "31.",
  "anya-e0602n0:639": " Yo jāti-domānī-mupāsi lambi taṃ,",
  "anya-e0602n0:640": "Kodhehi lokehi dubhāsi paṇḍitaṃ;",
  "anya-e0602n0:641": "Pūrepi mūlepi pahāsi diṭṭhikaṃ,",
  "anya-e0602n0:642": "Sabbehi pattehi namāmi icchitaṃ.",
  "anya-e0602n0:643": "(Indavaṃsāgāthā)",
  "anya-e0602n0:644": "32.",
  "anya-e0602n0:645": " Verañjake pūravare vibhūsite,",
  "anya-e0602n0:646": "Nelañjane dūmavane vikūjite;",
  "anya-e0602n0:647": "Khemaṅkare thūlatare vidū site,",
  "anya-e0602n0:648": "Eta-ṅgame pūna name virūpi ve.",
  "anya-e0602n0:649": "(Indavaṃsāgāthā)",
  "anya-e0602n0:650": "33.",
  "anya-e0602n0:651": " Adhunāpi sa sārisuto nimalaṃ,",
  "anya-e0602n0:652": "Tamupāsi matāpi kuto ci nayaṃ;",
  "anya-e0602n0:653": "Karuṇāyi dha yāci budho vinayaṃ,",
  "anya-e0602n0:654": "Garukāpi namāmi su-yo jita-haṃ.",
  "anya-e0602n0:655": "(Toṭakagāthā)",
  "anya-e0602n0:656": "34.",
  "anya-e0602n0:657": " Janavaro muni so sarito vane,",
  "anya-e0602n0:658": "Vasabhato udito-pari gotame;",
  "anya-e0602n0:659": "Gamanaso guṇiko gami-to name,",
  "anya-e0602n0:660": "Nagara-do juti-mo ghatito-sathe.",
  "anya-e0602n0:661": "(Dutavilambitagāthā)",
  "anya-e0602n0:662": "35.",
  "anya-e0602n0:663": " Bhagavati kuṭigāre yo nisinne,",
  "anya-e0602n0:664": "Dhanavati suvisāle-ko isinde;",
  "anya-e0602n0:665": "Ya-malabhi muni lābhe molichinne,",
  "anya-e0602n0:666": "Sa panami juti-māse-to kilinne.",
  "anya-e0602n0:667": "(Puṭagāthā)",
  "anya-e0602n0:668": "36.",
  "anya-e0602n0:669": " Paṭhapita-miccassa sidatu sabbaṃ,",
  "anya-e0602n0:670": "Paṭhami-dha sikkhassa hitasukhatthaṃ;",
  "anya-e0602n0:671": "Pavadiya giddhassa khiṇalukhatthaṃ,",
  "anya-e0602n0:672": "Panami ca kiccassa sikhamukappaṃ.",
  "anya-e0602n0:673": "(Kusumavicittāgāthā)",
  "anya-e0602n0:674": "37.",
  "anya-e0602n0:675": " Nilobhāsi dhūmehi yu-cco vilāse,",
  "anya-e0602n0:676": "Ṭhito cā-bhi bhū tehi rukkho-digāhe;",
  "anya-e0602n0:677": "Yi-to tāni pūrepi luddho dvivāre,",
  "anya-e0602n0:678": "Jino-kāsi pūjemi buddho hitā-se.",
  "anya-e0602n0:679": "(Bhujaṅgappayātagāthā)",
  "anya-e0602n0:680": "38.",
  "anya-e0602n0:681": " Janarame dasasare visālake,",
  "anya-e0602n0:682": "Munivare kuṭighare-riyāpathe;",
  "anya-e0602n0:683": "Dhutatare-subhakathe caji sa ve,",
  "anya-e0602n0:684": "Tatiyake-ta-midha ve ṭhapi name.",
  "anya-e0602n0:685": "(Piyaṃvadāgāthā)",
  "anya-e0602n0:686": "39.",
  "anya-e0602n0:687": " Vesālike tu vasi kātu cātukaṃ,",
  "anya-e0602n0:688": "Te ñāhi tesu labhi-dhā-mukā-mukaṃ;",
  "anya-e0602n0:689": "Negāmikesu bhaji phāsu sā-yukaṃ,",
  "anya-e0602n0:690": "Etā-dhikesu nami-kāsu-dā-tulaṃ.",
  "anya-e0602n0:691": "(Lalitāgāthā)",
  "anya-e0602n0:692": "40.",
  "anya-e0602n0:693": " Vadi suppiyo duvacanaṃ tamato,",
  "anya-e0602n0:694": "Sahi muttiko guṇakathaṃ tathato;",
  "anya-e0602n0:695": "Gami māṇavo durapathaṃ carato,",
  "anya-e0602n0:696": "Nami sādhavo budhavaraṃ paraso.",
  "anya-e0602n0:697": "(Pamitakkharāgāthā)",
  "anya-e0602n0:698": "41.",
  "anya-e0602n0:699": " Yu-pagami vimalo sakhilo tadā,",
  "anya-e0602n0:700": "Yuvavati-pivano rami yo brahmā;",
  "anya-e0602n0:701": "Ekasayi ṭhitato kathi kho guṇe,",
  "anya-e0602n0:702": "Esa nami jina-mo padhi-do-juke.",
  "anya-e0602n0:703": "(Ujjalāgāthā)",
  "anya-e0602n0:704": "42.",
  "anya-e0602n0:705": " Jānaṃ sabbesaṃ desi yo kho-dhimuttaṃ,",
  "anya-e0602n0:706": "Ānandattheraṃ vedito coḷisuttaṃ;",
  "anya-e0602n0:707": "Kāyassammukhe kātuno-lokiyaṃ-se,",
  "anya-e0602n0:708": "Ṭhāna-ssa-ppuge kāruṇo hoti vande.",
  "anya-e0602n0:709": "(Vessadevī gāthā)",
  "anya-e0602n0:710": "43.",
  "anya-e0602n0:711": " Sukathiya majjhimasīla-maparaṃ,",
  "anya-e0602n0:712": "Yu-pacita-metthi-dha cīra-manayaṃ;",
  "anya-e0602n0:713": "Budhayi ca bhajjita-mīṇavataraṃ,",
  "anya-e0602n0:714": "Sunami pavajjita-mīha-mamalaṃ.",
  "anya-e0602n0:715": "(Tāmarasagāthā)",
  "anya-e0602n0:716": "44.",
  "anya-e0602n0:717": " Mahakañhi sīlampi abhāsi kante,",
  "anya-e0602n0:718": "Brahmathandilī mamhi manāpi ramme;",
  "anya-e0602n0:719": "Calakampi gīrampi kadāci ambe,",
  "anya-e0602n0:720": "Varapaṇḍi khīṇampi namāmi taṃ ve.",
  "anya-e0602n0:721": "(Kamalāgāthā)",
  "anya-e0602n0:722": "45.",
  "anya-e0602n0:723": " Mohante jini paṭhame jaye jitāyaṃ,",
  "anya-e0602n0:724": "Soramme isipatane vane nivāsaṃ.",
  "anya-e0602n0:725": "Khobhante kiri sakale vade vilāsaṃ,",
  "anya-e0602n0:726": "Ghoraṃve vinidamane name jinā-haṃ.",
  "anya-e0602n0:727": "(Pahāsinīgāthā)",
  "anya-e0602n0:728": "46.",
  "anya-e0602n0:729": " Divārakaṃ bajanagaraṃ phitaṃ vase,",
  "anya-e0602n0:730": "Nisāya taṃ janagaṇanaṃ ṭhitaṃ mate;",
  "anya-e0602n0:731": "Vijānakaṃ tamajaṭakaṃ sitaṃ vane,",
  "anya-e0602n0:732": "Hitāvahaṃ narapavaraṃ imaṃ name.",
  "anya-e0602n0:733": "(Ruciragāthā)",
  "anya-e0602n0:734": "47.",
  "anya-e0602n0:735": " Racita-maviralaṃ manussa mathā paṇaṃ,",
  "anya-e0602n0:736": "Pasiya tatiyakaṃ catuttha makā sayaṃ;",
  "anya-e0602n0:737": "Karita-madhikataṃ akhubbhamalā sabhaṃ,",
  "anya-e0602n0:738": "Jahitagatiparaṃ panujja namāma-haṃ.",
  "anya-e0602n0:739": "(Parājitāgāthā)",
  "anya-e0602n0:740": "48.",
  "anya-e0602n0:741": " Nagara-majaya-mesa nivasi tha pare,",
  "anya-e0602n0:742": "Mahati sa maṇike sakuṇakujavane;",
  "anya-e0602n0:743": "Yapati vasati ve hitasivavahane,",
  "anya-e0602n0:744": "Surata mubhayame-sita mima paname.",
  "anya-e0602n0:745": "(Paharaṇakalikāgāthā)",
  "anya-e0602n0:746": "49.",
  "anya-e0602n0:747": " Chaṭṭhaṃ vase athu-da tattha vane mune saṃ,",
  "anya-e0602n0:748": "Sabbaṃ dhare makulapabbatake upedaṃ;",
  "anya-e0602n0:749": "Cattaṃ male manuja matthavase sudesaṃ,",
  "anya-e0602n0:750": "Bhattaṃ name lahuka mappa mare dhune taṃ.",
  "anya-e0602n0:751": "(Vasantatilakagāthā)",
  "anya-e0602n0:752": "50.",
  "anya-e0602n0:753": " Nuna upavasati idha tha puna parime,",
  "anya-e0602n0:754": "Sukhaguṇamahati tidasapura ajite;",
  "anya-e0602n0:755": "Yuganuta mavadi vitatha mughatari ve,",
  "anya-e0602n0:756": "Hutathuna manami simada tula mariye.",
  "anya-e0602n0:757": "(Sasikalāgāthā)",
  "anya-e0602n0:758": "51.",
  "anya-e0602n0:759": " Jinapati susumāraṃ bhesakallāvane-saṃ,",
  "anya-e0602n0:760": "Nivasati puthuñāṇaṃ khve-sa nandālaye-taṃ;",
  "anya-e0602n0:761": "Vimala-mi dhu-jukāyaṃ bhedasantāpa-sesaṃ,",
  "anya-e0602n0:762": "Vijaha-pi sukhumālaṃ esamantā name-haṃ.",
  "anya-e0602n0:763": "(Mālinīgāthā)",
  "anya-e0602n0:764": "52.",
  "anya-e0602n0:765": " Mahati sukantiye atha ca tattha sītale,",
  "anya-e0602n0:766": "Vasati kusambiye navamavassa-pī-tare;",
  "anya-e0602n0:767": "Avahi sukha-ntime pajaha-mattha-mī-dha ve,",
  "anya-e0602n0:768": "Panami nudaṃ hine sakalasatthavasaye.",
  "anya-e0602n0:769": "(Pabhaddakagāthā)",
  "anya-e0602n0:770": "53.",
  "anya-e0602n0:771": " Yudhavati pālileyyaka vane pahāya nāge,",
  "anya-e0602n0:772": "Upaṭhahi nāgi-dhe-sa dasame jahāya bāle;",
  "anya-e0602n0:773": "Sukhavasi kāyike ca manake tadāsa sāte,",
  "anya-e0602n0:774": "Yuta-madhi vāhite ca paname payāta māre.",
  "anya-e0602n0:775": "(Vāṇinīgāthā)",
  "anya-e0602n0:776": "54.",
  "anya-e0602n0:777": " Ito patte nāḷe vasati dijagāmepi dasame,",
  "anya-e0602n0:778": "Hitopatthenā-yeka adhiki-dha vādehi vadake;",
  "anya-e0602n0:779": "Vilomatthehā-neka-sahi ṭhita-māghepi samaye,",
  "anya-e0602n0:780": "Viyogatthe-tā-neja-mapi pihavāsehi paname.",
  "anya-e0602n0:781": "(Sikharaṇīgāthā)",
  "anya-e0602n0:782": "55.",
  "anya-e0602n0:783": " Dviadhiki-tare verañjāyaṃ tato dasamaṃ pare,",
  "anya-e0602n0:784": "Nivasi nilake khedaṅghātaṃ karo paramaṃ vane;",
  "anya-e0602n0:785": "Kilami idha ve vehaṅgānaṃ manoramakaṃ vase,",
  "anya-e0602n0:786": "Viraji-sigaṇe medhaṅkāraṃ asokadadaṃ name.",
  "anya-e0602n0:787": "(Hiriṇīgāthā)",
  "anya-e0602n0:788": "56.",
  "anya-e0602n0:789": " Yo sampuṇṇe upari tirase cāliye pabbatepi,",
  "anya-e0602n0:790": "Sobhaṃ phulle suvasi itare kāmite appamehi;",
  "anya-e0602n0:791": "Sāvatthikkenu-da catudase kārite ālayepi,",
  "anya-e0602n0:792": "Kāmo-cchidde tu bhaya muname ñātime dvārakehi.",
  "anya-e0602n0:793": "(Mandakkantāgāthā)",
  "anya-e0602n0:794": "57.",
  "anya-e0602n0:795": " Sakko kappile kariya madake niggaho yoti pañce,",
  "anya-e0602n0:796": "Dakkho kappiye vasidha yamake iddhako bhohi aññe;",
  "anya-e0602n0:797": "Yakkho dabbike damiya nagare soḷase-topi vaṅke,",
  "anya-e0602n0:798": "Aggo-ghattite paciya paname bodhake monipaññe.",
  "anya-e0602n0:799": "(Kusumitalatāvellitagāthā)",
  "anya-e0602n0:800": "58.",
  "anya-e0602n0:801": " Duladdhe pūre yopari ca dasato rājagehaṃ bhajanto,",
  "anya-e0602n0:802": "Tu satte kūle kho kari dha yapato vāsamejaṃ jahanto;",
  "anya-e0602n0:803": "Dumaṭṭhe pūneso ramita-calato ṭṭhārasetaṃ dadaṃ so,",
  "anya-e0602n0:804": "Guṇasse vūpeto namidha karabho kāyakhedaṃ sahanto.",
  "anya-e0602n0:805": "(Meghavipphujjitagāthā)",
  "anya-e0602n0:806": "59.",
  "anya-e0602n0:807": " Cālīye parime tatheva acale-kūnepi vīse lilaṃ,",
  "anya-e0602n0:808": "Bhāgī ce sa hite pageva pavase sūrehi nisevitaṃ;",
  "anya-e0602n0:809": "Kārite ramike pare ca nagare pūrepi vīse imaṃ,",
  "anya-e0602n0:810": "Hārite vasime jahena paname mūlepi khīṇe jitaṃ.",
  "anya-e0602n0:811": "(Saddūlavikkīlitagāthā)",
  "anya-e0602n0:812": "60.",
  "anya-e0602n0:813": " Pañcapañca-mākare tatopi piṇḍakena jetakānane ca,",
  "anya-e0602n0:814": "Aññamañña-mādarena yo nisinnakena te ca māpayeva;",
  "anya-e0602n0:815": "Pubbapubbaārāme payoji-pāsikāya vāramāvasedha,",
  "anya-e0602n0:816": "Suddhasuddha-māmalena poriyātimāya mānasā namesa.",
  "anya-e0602n0:817": "(Vuttagāthā)",
  "anya-e0602n0:818": "Puññenā’nena saṃsāramupadhi suci sappūrise vo paseve,",
  "anya-e0602n0:819": "Tehā dinnaṃ sugāho suciparisaupeto arogo bhaveyyaṃ;",
  "anya-e0602n0:820": "Dīghāyūko mahāpañña yasadhanasulābho ca kalyāṇamitto,",
  "anya-e0602n0:821": "Lokādibbo ca maggo samamatiparivārova nibbānapatto.",
  "anya-e0602n0:822": "(Saddharāgāthā)",
  "anya-e0602n0:823": "Ka.",
  "anya-e0602n0:824": " Nassati sāsane chanavutādhike ca tivise sate kaliyuge,",
  "anya-e0602n0:825": "Dvesatacuddasādhikasahassake sakalaraṭṭhakaṃ khubhi gate;",
  "anya-e0602n0:826": "Bhātikayuddhakena nagaraṃ tadā bhavati chārikā yatigaṇo,",
  "anya-e0602n0:827": "Dukkhagato mahāpaharaṇehi jivitakhayampi eti piṭake.",
  "anya-e0602n0:828": "(Bhaddakagāthā)",
  "anya-e0602n0:829": "Kha.",
  "anya-e0602n0:830": " Udisaka cetyakepi vikiriya nāsati dha so thiro sagaṇato,",
  "anya-e0602n0:831": "Vijahiya purato ttaravaneka kumbhakaragāmakaṃ nivasaye;",
  "anya-e0602n0:832": "Satagaṇakehi tattha janakopi ‘‘bhota idha vāsa sabbayatinaṃ,",
  "anya-e0602n0:833": "Upaṭṭhahamī’’ti tamhi katipāhanaṃ vasati kho vimaṃsiya sukhaṃ.",
  "anya-e0602n0:834": "(Lalitagāthā)",
  "anya-e0602n0:835": "Ga.",
  "anya-e0602n0:836": " Tattha araññe ramito sucari saddhamma-timāni suyatīhi tipīko,",
  "anya-e0602n0:837": "Dhūrasuyutto parigāhiya sujāto supaṭṭhāti kunadita-muyānaṃ;",
  "anya-e0602n0:838": "So satamaccehi kataṃ nagari daṃ tassa ca pācina raha dhikakose,",
  "anya-e0602n0:839": "Paccayanāyāsu da chāyabahuko suddhayatipi idha vasanakāle.",
  "anya-e0602n0:840": "(Tanugāthā)",
  "anya-e0602n0:841": "Gha.",
  "anya-e0602n0:842": " Phagguṇamāse chadine raciya niṭṭhaṃva gato paramari iminā-yaṃ,",
  "anya-e0602n0:843": "Sijjhatu pemaṃ vata rakkhatu sudevo uda vaḍḍhatu jinavacane taṃ;",
  "anya-e0602n0:844": "Vāsamālinī niṭṭhitā."
}