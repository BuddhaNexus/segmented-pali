{
  "anya-e1010n0:0": " Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1010n0:1": "Caturārakkhadīpanī",
  "anya-e1010n0:2": "Kāyapaccavekkhaṇā",
  "anya-e1010n0:3": "1. Dussīlakathā,",
  "anya-e1010n0:4": "2. Sīlānisaṁsakathā,",
  "anya-e1010n0:5": "3. Anūsāsanakathā,",
  "anya-e1010n0:6": "4. Āvāsikācārakathā,",
  "anya-e1010n0:7": "5. Paccayanissaggakathā,",
  "anya-e1010n0:8": "6. Pātimokkhakathā,",
  "anya-e1010n0:9": "7. Dāyakovādakathā,",
  "anya-e1010n0:10": "Paṇāmapaṭiñā",
  "anya-e1010n0:11": "1.",
  "anya-e1010n0:12": " Cakkavāḷa nahutā ga, devāli gaṇa cumbito;",
  "anya-e1010n0:13": "Buddha pādambujo ṭhātu, sīse dayā tigandhajo.",
  "anya-e1010n0:14": "2.",
  "anya-e1010n0:15": " Nanta cakkavāḷa bbhugga, guṇa sanniccitaṁ jinaṁ;",
  "anya-e1010n0:16": "Vande tappūjitaṁ dhammaṁ, tajjaṁ saṅghañca nimmalaṁ.",
  "anya-e1010n0:17": "3.",
  "anya-e1010n0:18": " Vakkhāmi caturārakkhaṁ, sambuddha vacana nvayaṁ;",
  "anya-e1010n0:19": "Appamādāvahaṁ etaṁ, sottabbaṁ bhavabhīruhi.",
  "anya-e1010n0:20": "4.",
  "anya-e1010n0:21": " Buddhānussati maraṇā, bhubhā mettāca bhāvanā;",
  "anya-e1010n0:22": "Appamādāya ārakkhā, catasso mānitā sataṁ.",
  "anya-e1010n0:23": "1. Buddhānūssati bhāvanā,",
  "anya-e1010n0:24": "2. Maraṇassati bhāvanā,",
  "anya-e1010n0:25": "3. Asubha bhāvanā,",
  "anya-e1010n0:26": "4. Mettā bhāvanā,",
  "anya-e1010n0:27": "5.",
  "anya-e1010n0:28": " Buddhovādaṁ saritvāva, maccubbiggā sukhesino;",
  "anya-e1010n0:29": "Sītā sītataraṁ yanti, subhamettambusi-ṭṭhitā.",
  "anya-e1010n0:30": "6.",
  "anya-e1010n0:31": " Maraṇaggi vāraṇambu, sambuddhavacanaṁ yidaṁ;",
  "anya-e1010n0:32": "Bahū tadaggi santattā, sītāvāsuṁ tadambunā.",
  "anya-e1010n0:33": "7.",
  "anya-e1010n0:34": " Saddhaṁ buddhena tejetvā, mānaṁ maraṇacintayā;",
  "anya-e1010n0:35": "Asubhāya hane rāgaṁ, dosaṁ mettāya paññavā."
}