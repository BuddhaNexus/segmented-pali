{
  "anya-e1010n0:0": " Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1010n0:1": "Caturārakkhadīpanī",
  "anya-e1010n0:2": "Kāyapaccavekkhaṇā",
  "anya-e1010n0:3": "1. Dussīlakathā,",
  "anya-e1010n0:4": "2. Sīlānisaṃsakathā,",
  "anya-e1010n0:5": "3. Anūsāsanakathā,",
  "anya-e1010n0:6": "4. Āvāsikācārakathā,",
  "anya-e1010n0:7": "5. Paccayanissaggakathā,",
  "anya-e1010n0:8": "6. Pātimokkhakathā,",
  "anya-e1010n0:9": "7. Dāyakovādakathā,",
  "anya-e1010n0:10": "Paṇāmapaṭiñā",
  "anya-e1010n0:11": "1.",
  "anya-e1010n0:12": " Cakkavāḷa nahutā ga, devāli gaṇa cumbito;",
  "anya-e1010n0:13": "Buddha pādambujo ṭhātu, sīse dayā tigandhajo.",
  "anya-e1010n0:14": "2.",
  "anya-e1010n0:15": " Nanta cakkavāḷa bbhugga, guṇa sanniccitaṃ jinaṃ;",
  "anya-e1010n0:16": "Vande tappūjitaṃ dhammaṃ, tajjaṃ saṅghañca nimmalaṃ.",
  "anya-e1010n0:17": "3.",
  "anya-e1010n0:18": " Vakkhāmi caturārakkhaṃ, sambuddha vacana nvayaṃ;",
  "anya-e1010n0:19": "Appamādāvahaṃ etaṃ, sottabbaṃ bhavabhīruhi.",
  "anya-e1010n0:20": "4.",
  "anya-e1010n0:21": " Buddhānussati maraṇā, bhubhā mettāca bhāvanā;",
  "anya-e1010n0:22": "Appamādāya ārakkhā, catasso mānitā sataṃ.",
  "anya-e1010n0:23": "1. Buddhānūssati bhāvanā,",
  "anya-e1010n0:24": "2. Maraṇassati bhāvanā,",
  "anya-e1010n0:25": "3. Asubha bhāvanā,",
  "anya-e1010n0:26": "4. Mettā bhāvanā,",
  "anya-e1010n0:27": "5.",
  "anya-e1010n0:28": " Buddhovādaṃ saritvāva, maccubbiggā sukhesino;",
  "anya-e1010n0:29": "Sītā sītataraṃ yanti, subhamettambusi-ṭṭhitā.",
  "anya-e1010n0:30": "6.",
  "anya-e1010n0:31": " Maraṇaggi vāraṇambu, sambuddhavacanaṃ yidaṃ;",
  "anya-e1010n0:32": "Bahū tadaggi santattā, sītāvāsuṃ tadambunā.",
  "anya-e1010n0:33": "7.",
  "anya-e1010n0:34": " Saddhaṃ buddhena tejetvā, mānaṃ maraṇacintayā;",
  "anya-e1010n0:35": "Asubhāya hane rāgaṃ, dosaṃ mettāya paññavā."
}