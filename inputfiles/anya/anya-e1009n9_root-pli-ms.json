{
  "anya-e1009n9:0": "Sādhujana-niddesa",
  "anya-e1009n9:1": "212.",
  "anya-e1009n9:2": " Kāya-kammaṃ suci tesaṃ,",
  "anya-e1009n9:3": "Vācā-kammaṃ anāvilaṃ;",
  "anya-e1009n9:4": "Mano-kammaṃ suci-suddhaṃ,",
  "anya-e1009n9:5": "Tādisā sujanā narā.",
  "anya-e1009n9:6": "213.",
  "anya-e1009n9:7": " Seṭṭha-vittaṃ sutaṃ paññā,",
  "anya-e1009n9:8": "Saddhanaṃ sattadhā hotti;",
  "anya-e1009n9:9": "Saddhā sīlaṃ sutaṃ cāgo,",
  "anya-e1009n9:10": "Paññā ceva hirottappaṃ.",
  "anya-e1009n9:11": "214.",
  "anya-e1009n9:12": " Saddhammāpi ca satteva,",
  "anya-e1009n9:13": "Saddhā hirī ca ottappaṃ;",
  "anya-e1009n9:14": "Bāhussaccaṃ dhiro ceva,",
  "anya-e1009n9:15": "Sati paññā ca iccevaṃ.",
  "anya-e1009n9:16": "215.",
  "anya-e1009n9:17": " Hirī-ottappa-sampannā ,",
  "anya-e1009n9:18": "Suktka-dhamma-samāhitā;",
  "anya-e1009n9:19": "Santo sappurisā loke,",
  "anya-e1009n9:20": "Deva-dhammāti vuccare.",
  "anya-e1009n9:21": "216.",
  "anya-e1009n9:22": " Saddho hirimā ottappī,",
  "anya-e1009n9:23": "Vīro pañño sa-gāravo;",
  "anya-e1009n9:24": "Bhabbo āpajjituṃ buddhiṃ,",
  "anya-e1009n9:25": "Virūḷhiñca vipullataṃ.",
  "anya-e1009n9:26": "217.",
  "anya-e1009n9:27": " Yo ve kataññū kata-vedi dhīro,",
  "anya-e1009n9:28": "Kalyāṇa-mitto daḷhaa-bhatto ca hoti;",
  "anya-e1009n9:29": "Dukkhittassa sakkaccaṃ karoti kiccaṃ,",
  "anya-e1009n9:30": "Tathāvidhaṃ sappurisaṃ vadanti.",
  "anya-e1009n9:31": "218.",
  "anya-e1009n9:32": " Mātā-petti-bharaṃ jantuṃ,",
  "anya-e1009n9:33": "Kule jeṭṭhāpacāyinaṃ;",
  "anya-e1009n9:34": "Saṇhaṃ sakhila-sambhāsaṃ,",
  "anya-e1009n9:35": "Pesuṇeyappahāyinaṃ.",
  "anya-e1009n9:36": "219.",
  "anya-e1009n9:37": " Macchera-vinaye yuttaṃ,",
  "anya-e1009n9:38": "Saccaṃ kodhābhituṃ naraṃ;",
  "anya-e1009n9:39": "Taṃ ve devā tāvatiṃsā,",
  "anya-e1009n9:40": "Āhu sappuriso iti.",
  "anya-e1009n9:41": "220.",
  "anya-e1009n9:42": " A-ppamādena maghavā,",
  "anya-e1009n9:43": "Devānaṃ seṭṭhataṃ gato;",
  "anya-e1009n9:44": "A-ppamādaṃ pasaṃsanti,",
  "anya-e1009n9:45": "Pamādo garahito sadā.",
  "anya-e1009n9:46": "221.",
  "anya-e1009n9:47": " Dānaṃ sīlaṃ pariccāgaṃ,",
  "anya-e1009n9:48": "Ājjavaṃ maddavaṃ tapaṃ;",
  "anya-e1009n9:49": "A-kodhaṃ a-vihiṃsañca,",
  "anya-e1009n9:50": "Khantīca a-virodhanaṃ.",
  "anya-e1009n9:51": "222.",
  "anya-e1009n9:52": " Iccete kusale dhamme,",
  "anya-e1009n9:53": "Ṭhite passāmi attani;",
  "anya-e1009n9:54": "Tato me jāyate pīti,",
  "anya-e1009n9:55": "Somanassañcanappakaṃ.",
  "anya-e1009n9:56": "223.",
  "anya-e1009n9:57": " Nanu teyeva santā no,",
  "anya-e1009n9:58": "Sāgarā na kulācalā;",
  "anya-e1009n9:59": "Manaṃpi mariyādaṃ ye,",
  "anya-e1009n9:60": "Saṃvaṭṭepi jahanti no.",
  "anya-e1009n9:61": "224.",
  "anya-e1009n9:62": " Na puppha-gandho paṭivātameti,",
  "anya-e1009n9:63": "Na candanaṃ taggara mallikā vā;",
  "anya-e1009n9:64": "Satañca gandho paṭivātameti,",
  "anya-e1009n9:65": "Sabbā disā sappuriso pavāyati.",
  "anya-e1009n9:66": "225.",
  "anya-e1009n9:67": " Tepi loka-hitā sattā,",
  "anya-e1009n9:68": "Sūriyo candimā api;",
  "anya-e1009n9:69": "Atthaṃ passa gamissanti,",
  "anya-e1009n9:70": "Niyamo kena laṅghate.",
  "anya-e1009n9:71": "226.",
  "anya-e1009n9:72": " Satthā deva-manussānaṃ,",
  "anya-e1009n9:73": "Vasī sopi munissaro;",
  "anya-e1009n9:74": "Gatova nibbutiṃ sabbe,",
  "anya-e1009n9:75": "Saṅkhārā na hi sassatā.",
  "anya-e1009n9:76": "227.",
  "anya-e1009n9:77": " Kareyya kusalaṃ sabbaṃ,",
  "anya-e1009n9:78": "Sivaṃ nibbānamāvahaṃ;",
  "anya-e1009n9:79": "Sareyyaa a-niccaṃ khandhaṃ,",
  "anya-e1009n9:80": "Nibbidā-ñāṇa-gocaraṃ.",
  "anya-e1009n9:81": "228.",
  "anya-e1009n9:82": " Yātānuyāyī ca bhavāhi māṇava,",
  "anya-e1009n9:83": "Allañca pāṇiṃ parivajjayassu;",
  "anya-e1009n9:84": "Mā cassu mittesu kadāci dubbhi,",
  "anya-e1009n9:85": "Mā ca vasaṃ a-satīnaṃ gaccha.",
  "anya-e1009n9:86": "229.",
  "anya-e1009n9:87": " A-sandhavaṃ nāpi ca diṭṭha-pubbaṃ,",
  "anya-e1009n9:88": "Yo āsanenāpi nimantayeyya;",
  "anya-e1009n9:89": "Tasseva atthaṃ puriso kareyya,",
  "anya-e1009n9:90": "Yātānuyāyītitamāhupaṇḍitā.",
  "anya-e1009n9:91": "230.",
  "anya-e1009n9:92": " Yassekarattipi ghare vaseyya,",
  "anya-e1009n9:93": "Yatthanna-pānaṃ puriso labheyya;",
  "anya-e1009n9:94": "Na tassa pāpaṃ manasāpi cinteyya,",
  "anya-e1009n9:95": "A-dubbha-pāṇi dahate mitta-dubbho.",
  "anya-e1009n9:96": "Tatīya sādhunara",
  "anya-e1009n9:97": "231.",
  "anya-e1009n9:98": " Yassa rukkhassa chāyāya,",
  "anya-e1009n9:99": "Nisīdeyya sayeyya vā;",
  "anya-e1009n9:100": "Na tassa sākhaṃ bhañjeyya,",
  "anya-e1009n9:101": "Mitta-dubbho hi pāpako.",
  "anya-e1009n9:102": "Catuttha sādhunara",
  "anya-e1009n9:103": "232.",
  "anya-e1009n9:104": " Puṇṇaṃpi ce maṃ pathaviṃ dhanena,",
  "anya-e1009n9:105": "Dajjitthiyā puriso sammatāya;",
  "anya-e1009n9:106": "Saddhā khaṇaṃ atimaññeyya taṃpi,",
  "anya-e1009n9:107": "Tāsaṃ vasaṃ a-satīnaṃ na gacche.",
  "anya-e1009n9:108": "233.",
  "anya-e1009n9:109": " Evaṃ kho yātaṃ anuyāyī hoti,",
  "anya-e1009n9:110": "Allañca pāṇiṃ dahate punevaṃ;",
  "anya-e1009n9:111": "A-satī ca sā so pana mittaṃ-dubbho,",
  "anya-e1009n9:112": "So dhammiko hohi jahassu a-dhammaṃ."
}