{
  "anya-e1009n9:0": "Sādhujana-niddesa",
  "anya-e1009n9:1": "212.",
  "anya-e1009n9:2": " Kāya-kammaṁ suci tesaṁ,",
  "anya-e1009n9:3": "Vācā-kammaṁ anāvilaṁ;",
  "anya-e1009n9:4": "Mano-kammaṁ suci-suddhaṁ,",
  "anya-e1009n9:5": "Tādisā sujanā narā.",
  "anya-e1009n9:6": "213.",
  "anya-e1009n9:7": " Seṭṭha-vittaṁ sutaṁ paññā,",
  "anya-e1009n9:8": "Saddhanaṁ sattadhā hotti;",
  "anya-e1009n9:9": "Saddhā sīlaṁ sutaṁ cāgo,",
  "anya-e1009n9:10": "Paññā ceva hirottappaṁ.",
  "anya-e1009n9:11": "214.",
  "anya-e1009n9:12": " Saddhammāpi ca satteva,",
  "anya-e1009n9:13": "Saddhā hirī ca ottappaṁ;",
  "anya-e1009n9:14": "Bāhussaccaṁ dhiro ceva,",
  "anya-e1009n9:15": "Sati paññā ca iccevaṁ.",
  "anya-e1009n9:16": "215.",
  "anya-e1009n9:17": " Hirī-ottappa-sampannā ,",
  "anya-e1009n9:18": "Suktka-dhamma-samāhitā;",
  "anya-e1009n9:19": "Santo sappurisā loke,",
  "anya-e1009n9:20": "Deva-dhammāti vuccare.",
  "anya-e1009n9:21": "216.",
  "anya-e1009n9:22": " Saddho hirimā ottappī,",
  "anya-e1009n9:23": "Vīro pañño sa-gāravo;",
  "anya-e1009n9:24": "Bhabbo āpajjituṁ buddhiṁ,",
  "anya-e1009n9:25": "Virūḷhiñca vipullataṁ.",
  "anya-e1009n9:26": "217.",
  "anya-e1009n9:27": " Yo ve kataññū kata-vedi dhīro,",
  "anya-e1009n9:28": "Kalyāṇa-mitto daḷhaa-bhatto ca hoti;",
  "anya-e1009n9:29": "Dukkhittassa sakkaccaṁ karoti kiccaṁ,",
  "anya-e1009n9:30": "Tathāvidhaṁ sappurisaṁ vadanti.",
  "anya-e1009n9:31": "218.",
  "anya-e1009n9:32": " Mātā-petti-bharaṁ jantuṁ,",
  "anya-e1009n9:33": "Kule jeṭṭhāpacāyinaṁ;",
  "anya-e1009n9:34": "Saṇhaṁ sakhila-sambhāsaṁ,",
  "anya-e1009n9:35": "Pesuṇeyappahāyinaṁ.",
  "anya-e1009n9:36": "219.",
  "anya-e1009n9:37": " Macchera-vinaye yuttaṁ,",
  "anya-e1009n9:38": "Saccaṁ kodhābhituṁ naraṁ;",
  "anya-e1009n9:39": "Taṁ ve devā tāvatiṁsā,",
  "anya-e1009n9:40": "Āhu sappuriso iti.",
  "anya-e1009n9:41": "220.",
  "anya-e1009n9:42": " A-ppamādena maghavā,",
  "anya-e1009n9:43": "Devānaṁ seṭṭhataṁ gato;",
  "anya-e1009n9:44": "A-ppamādaṁ pasaṁsanti,",
  "anya-e1009n9:45": "Pamādo garahito sadā.",
  "anya-e1009n9:46": "221.",
  "anya-e1009n9:47": " Dānaṁ sīlaṁ pariccāgaṁ,",
  "anya-e1009n9:48": "Ājjavaṁ maddavaṁ tapaṁ;",
  "anya-e1009n9:49": "A-kodhaṁ a-vihiṁsañca,",
  "anya-e1009n9:50": "Khantīca a-virodhanaṁ.",
  "anya-e1009n9:51": "222.",
  "anya-e1009n9:52": " Iccete kusale dhamme,",
  "anya-e1009n9:53": "Ṭhite passāmi attani;",
  "anya-e1009n9:54": "Tato me jāyate pīti,",
  "anya-e1009n9:55": "Somanassañcanappakaṁ.",
  "anya-e1009n9:56": "223.",
  "anya-e1009n9:57": " Nanu teyeva santā no,",
  "anya-e1009n9:58": "Sāgarā na kulācalā;",
  "anya-e1009n9:59": "Manaṁpi mariyādaṁ ye,",
  "anya-e1009n9:60": "Saṁvaṭṭepi jahanti no.",
  "anya-e1009n9:61": "224.",
  "anya-e1009n9:62": " Na puppha-gandho paṭivātameti,",
  "anya-e1009n9:63": "Na candanaṁ taggara mallikā vā;",
  "anya-e1009n9:64": "Satañca gandho paṭivātameti,",
  "anya-e1009n9:65": "Sabbā disā sappuriso pavāyati.",
  "anya-e1009n9:66": "225.",
  "anya-e1009n9:67": " Tepi loka-hitā sattā,",
  "anya-e1009n9:68": "Sūriyo candimā api;",
  "anya-e1009n9:69": "Atthaṁ passa gamissanti,",
  "anya-e1009n9:70": "Niyamo kena laṅghate.",
  "anya-e1009n9:71": "226.",
  "anya-e1009n9:72": " Satthā deva-manussānaṁ,",
  "anya-e1009n9:73": "Vasī sopi munissaro;",
  "anya-e1009n9:74": "Gatova nibbutiṁ sabbe,",
  "anya-e1009n9:75": "Saṅkhārā na hi sassatā.",
  "anya-e1009n9:76": "227.",
  "anya-e1009n9:77": " Kareyya kusalaṁ sabbaṁ,",
  "anya-e1009n9:78": "Sivaṁ nibbānamāvahaṁ;",
  "anya-e1009n9:79": "Sareyyaa a-niccaṁ khandhaṁ,",
  "anya-e1009n9:80": "Nibbidā-ñāṇa-gocaraṁ.",
  "anya-e1009n9:81": "228.",
  "anya-e1009n9:82": " Yātānuyāyī ca bhavāhi māṇava,",
  "anya-e1009n9:83": "Allañca pāṇiṁ parivajjayassu;",
  "anya-e1009n9:84": "Mā cassu mittesu kadāci dubbhi,",
  "anya-e1009n9:85": "Mā ca vasaṁ a-satīnaṁ gaccha.",
  "anya-e1009n9:86": "229.",
  "anya-e1009n9:87": " A-sandhavaṁ nāpi ca diṭṭha-pubbaṁ,",
  "anya-e1009n9:88": "Yo āsanenāpi nimantayeyya;",
  "anya-e1009n9:89": "Tasseva atthaṁ puriso kareyya,",
  "anya-e1009n9:90": "Yātānuyāyītitamāhupaṇḍitā.",
  "anya-e1009n9:91": "230.",
  "anya-e1009n9:92": " Yassekarattipi ghare vaseyya,",
  "anya-e1009n9:93": "Yatthanna-pānaṁ puriso labheyya;",
  "anya-e1009n9:94": "Na tassa pāpaṁ manasāpi cinteyya,",
  "anya-e1009n9:95": "A-dubbha-pāṇi dahate mitta-dubbho.",
  "anya-e1009n9:96": "Tatīya sādhunara",
  "anya-e1009n9:97": "231.",
  "anya-e1009n9:98": " Yassa rukkhassa chāyāya,",
  "anya-e1009n9:99": "Nisīdeyya sayeyya vā;",
  "anya-e1009n9:100": "Na tassa sākhaṁ bhañjeyya,",
  "anya-e1009n9:101": "Mitta-dubbho hi pāpako.",
  "anya-e1009n9:102": "Catuttha sādhunara",
  "anya-e1009n9:103": "232.",
  "anya-e1009n9:104": " Puṇṇaṁpi ce maṁ pathaviṁ dhanena,",
  "anya-e1009n9:105": "Dajjitthiyā puriso sammatāya;",
  "anya-e1009n9:106": "Saddhā khaṇaṁ atimaññeyya taṁpi,",
  "anya-e1009n9:107": "Tāsaṁ vasaṁ a-satīnaṁ na gacche.",
  "anya-e1009n9:108": "233.",
  "anya-e1009n9:109": " Evaṁ kho yātaṁ anuyāyī hoti,",
  "anya-e1009n9:110": "Allañca pāṇiṁ dahate punevaṁ;",
  "anya-e1009n9:111": "A-satī ca sā so pana mittaṁ-dubbho,",
  "anya-e1009n9:112": "So dhammiko hohi jahassu a-dhammaṁ."
}