{
  "anya-e1213n0:0": "Saddabindu pakaraṇaṃ",
  "anya-e1213n0:1": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1213n0:2": "1.",
  "anya-e1213n0:3": " Yassañeyyesu dhammesu, nāṇumattampaveditaṃ,",
  "anya-e1213n0:4": "Natvāsaddhammasaṅghaṃtaṃ, saddabinduṃsamārabhe;",
  "anya-e1213n0:5": "2. ",
  "anya-e1213n0:6": " Kādiritā navasaṅkhyā, kamenaṭā di yādica,",
  "anya-e1213n0:7": "Pādayopañca saṅkhyātā, suññanāmā saraññanā;",
  "anya-e1213n0:8": "3.",
  "anya-e1213n0:9": " Sarehevasarāpubbe luttāvāvīpareramā,",
  "anya-e1213n0:10": "Byañjanācāgamāvāvī dīgharassādisambhavā;",
  "anya-e1213n0:11": "4. ",
  "anya-e1213n0:12": " Kākāsenāgatosisa keniddhimaccadassayi,",
  "anya-e1213n0:13": "Arājakhvaggimesīnaṃ sotukammeghayitthiyo;",
  "anya-e1213n0:14": "Iti sandhikappo samatto.",
  "anya-e1213n0:15": "5. ",
  "anya-e1213n0:16": " Buddhapumayuvasanta rājabrahmasakhācasā,",
  "anya-e1213n0:17": "Yatādidehījantuca satthupitābhibhūvidū;",
  "anya-e1213n0:18": "6.",
  "anya-e1213n0:19": " Kaññāmmārattithipo, kkharaṇīnadirumātubhū,",
  "anya-e1213n0:20": "Napuṃsaketiyantāca, padakammadadhāyuno;",
  "anya-e1213n0:21": "7. ",
  "anya-e1213n0:22": " Gahitāgahaṇenettha suddhosyādyantakāpume,",
  "anya-e1213n0:23": "Vimalāhontijāntehi thyaṃpañcantehidādhikā;",
  "anya-e1213n0:24": "8.",
  "anya-e1213n0:25": " Napuṃsakepayogātu janakāhontityantato,",
  "anya-e1213n0:26": "Padhānānugatāsabba nāmasamāsataddhitā;",
  "anya-e1213n0:27": "9. ",
  "anya-e1213n0:28": " Attiliṅgānipātādi tatoluttāvasyādayo,",
  "anya-e1213n0:29": "Suttānurūpatosiddhā hontivattāmanādayo;",
  "anya-e1213n0:30": "Iti nāmakappo samatto.",
  "anya-e1213n0:31": "10.",
  "anya-e1213n0:32": " Chakārakesasāmismiṃ samāsohotisambhavā,",
  "anya-e1213n0:33": "Taddhītākattukammasa, mpadānokāsasāmisu;",
  "anya-e1213n0:34": "11. ",
  "anya-e1213n0:35": " Sādhattayamhiākhyāto kitakosattasādhane,",
  "anya-e1213n0:36": "Sabbatthapaṭhamāvutte avuttedutiyādayo;",
  "anya-e1213n0:37": "12.",
  "anya-e1213n0:38": " Manasāmuninovutyā vanebuddhenavaṇṇite,",
  "anya-e1213n0:39": "Vaṭṭāhitovivaṭṭatthaṃ bhikkhubhāvetibhāvanaṃ;",
  "anya-e1213n0:40": "Iti kārakakappo samatto.",
  "anya-e1213n0:41": "13. ",
  "anya-e1213n0:42": " Rāsīdvipadikādvandā liṅgenavacanenaca,",
  "anya-e1213n0:43": "Luttātulyādhikaraṇā bahubbīhītukhemarū;",
  "anya-e1213n0:44": "14.",
  "anya-e1213n0:45": " Tappurisācakhemorā dayācakammadhārayā,",
  "anya-e1213n0:46": "Digavocāvyayāhārā etesabbepihāritā;",
  "anya-e1213n0:47": "Iti samāsakappo samatto.",
  "anya-e1213n0:48": "15.",
  "anya-e1213n0:49": " Kaccāditopiekamhā saddatoniyamaṃvinā,",
  "anya-e1213n0:50": "Nekatthesatibhonteva sabbetaddhitapaccayā;",
  "anya-e1213n0:51": "Iti taddhitakappo samatto.",
  "anya-e1213n0:52": "16. ",
  "anya-e1213n0:53": " Kattarināññathākamme tathābhāvetumerayā,",
  "anya-e1213n0:54": "Sabbetepacadhātumhi saṅkhepenamarūmayā;",
  "anya-e1213n0:55": "17.",
  "anya-e1213n0:56": " Gamīmhātiguṇāphatto sambhavāaññadhātusu,",
  "anya-e1213n0:57": "Anantāvapayogāte ādesapaccayādihi;",
  "anya-e1213n0:58": "Iti ākhyātakappo samatto.",
  "anya-e1213n0:59": "18.",
  "anya-e1213n0:60": " Kitādipaccayāsabbe, ekamhāapidhātuto,",
  "anya-e1213n0:61": "Siyuṃnurūpatosatta, sādhanesatipāyato;",
  "anya-e1213n0:62": "Iti kitakappo samatto.",
  "anya-e1213n0:63": "19. ",
  "anya-e1213n0:64": " Iminākiñcilesena, sakkāñātuṃjināgame,",
  "anya-e1213n0:65": "Payogāñāṇināsindhu, rasovekenabindunā;",
  "anya-e1213n0:66": "20.",
  "anya-e1213n0:67": " Rammaṃsīghappavesāya, puraṃpiṭakasaññitaṃ,",
  "anya-e1213n0:68": "Maggojumaggataṃmaggaṃ, saddāraññevisodhito;",
  "anya-e1213n0:69": "21. ",
  "anya-e1213n0:70": " Teneva kiñci jalito jalito padīpo",
  "anya-e1213n0:71": "Kaccāyanuttiratano citagabbhakoṇe,",
  "anya-e1213n0:72": "Dhammādirājagurunā garumāmakena",
  "anya-e1213n0:73": "Dhammena yobbipatinā sagaruttanīto;",
  "anya-e1213n0:74": "Iti saddabindu pakaraṇaṃ parisamattaṃ.",
  "anya-e1213n0:75": "Yosaññamo guṇadhano nayanaṃ nijaṃva",
  "anya-e1213n0:76": "Sikkhāpayī mama mavaṃ sugatāgamādo,",
  "anya-e1213n0:77": "Salloka puñja suhado padumādi rāma",
  "anya-e1213n0:78": "Nāmo mahā yativarā cariyo samayhaṃ;",
  "anya-e1213n0:79": "Saddhādhanena vasatā viditamhi pupphā",
  "anya-e1213n0:80": "Rāmedhunā ariyavaṃsa dhajavhayena,",
  "anya-e1213n0:81": "Santena ñāṇatilako tyaparākhyakena",
  "anya-e1213n0:82": "Bālānametamavidhīyi mayāhitāya;"
}