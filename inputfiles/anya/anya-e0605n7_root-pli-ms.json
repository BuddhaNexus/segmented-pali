{
  "anya-e0605n7:0": "Vijāyanamaṅgaladīpanīgāthā",
  "anya-e0605n7:1": "36.",
  "anya-e0605n7:2": " Sā puṇṇagabbhā dasamāsato paraṃ,",
  "anya-e0605n7:3": "Gantvāna phullaṃ varalumbinīvanaṃ;",
  "anya-e0605n7:4": "Ṭhitā gahetvā varasālasākhaṃ,",
  "anya-e0605n7:5": "Vijāyi taṃ puttavaraṃ sukhena.",
  "anya-e0605n7:6": "37.",
  "anya-e0605n7:7": " Tadā sahassīdasalokadhātusu,",
  "anya-e0605n7:8": "Devā ca nāgā asurā ca yakkhā;",
  "anya-e0605n7:9": "Nānādisā maṅgalacakkavāḷaṃ,",
  "anya-e0605n7:10": "Sumaṅgalaṃ maṅgalamāgamiṃsu.",
  "anya-e0605n7:11": "38.",
  "anya-e0605n7:12": " Anekasākhañca sahassamaṇḍalaṃ,",
  "anya-e0605n7:13": "Chattaṃ marū dhārayumantalikkhe;",
  "anya-e0605n7:14": "Suvaṇṇadaṇḍā vipatanti cāmarā,",
  "anya-e0605n7:15": "Khajjiṃsu bherī ca nadiṃsu saṅkhā.",
  "anya-e0605n7:16": "39.",
  "anya-e0605n7:17": " Malenakenāpi anūpalitto,",
  "anya-e0605n7:18": "Ṭhito va pādāni pasārayanto;",
  "anya-e0605n7:19": "Kathī va dhammāsanatotaranto,",
  "anya-e0605n7:20": "Jāto yathādiccavaro nabhamhā.",
  "anya-e0605n7:21": "40.",
  "anya-e0605n7:22": " Khīṇāsavā brahmagaṇopagantvā,",
  "anya-e0605n7:23": "Suvaṇṇajālena paṭiggahesuṃ;",
  "anya-e0605n7:24": "Tato ca devājinacammakena,",
  "anya-e0605n7:25": "Tato dukūlena ca taṃ manussā.",
  "anya-e0605n7:26": "41.",
  "anya-e0605n7:27": " Tesaṃ pi hatthā varabhūmiyaṃ ṭhito,",
  "anya-e0605n7:28": "Disā vilokesi sabbā samantato;",
  "anya-e0605n7:29": "Vadiṃsu devā pi ca brahmakāyikā,",
  "anya-e0605n7:30": "Tayā samo katthaci natthi uttaro.",
  "anya-e0605n7:31": "42.",
  "anya-e0605n7:32": " Gantvāna uttaraṃ satta padavārehi vikkamo,",
  "anya-e0605n7:33": "Sīhanādaṃ nadī tesaṃ devatānaṃ hi sāvayaṃ.",
  "anya-e0605n7:34": "43.",
  "anya-e0605n7:35": " Tato puttaṃ gahetvāna gatā mātā sakaṅgharaṃ,",
  "anya-e0605n7:36": "Mātā sattamiyaṃ gantvā deaputtattamāgami.",
  "anya-e0605n7:37": "44.",
  "anya-e0605n7:38": " Te brahmaṇā pañcamiyaṃ subhuttā,",
  "anya-e0605n7:39": "Nāmaṃ gahetuṃ varalakkhaṇāni;",
  "anya-e0605n7:40": "Disvāna ekaṅgulimukkhipiṃsu,",
  "anya-e0605n7:41": "Buddho ayaṃ hessati vītarāgo.",
  "anya-e0605n7:42": "45.",
  "anya-e0605n7:43": " Jiṇṇañca disvā byādhikaṃ matañca,",
  "anya-e0605n7:44": "Avhāyitaṃ pabbajitañca disvā;",
  "anya-e0605n7:45": "Ohāya pabbajjamupeti kāme,",
  "anya-e0605n7:46": "Buddho ayaṃ hessati vītarāgo."
}