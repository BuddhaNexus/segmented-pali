{
  "anya-e0605n27:0": "Guṇadīpanīgāthā",
  "anya-e0605n27:1": "184.",
  "anya-e0605n27:2": " Na tassa adiṭṭhanamidhatthi kiñci,",
  "anya-e0605n27:3": "Ato aviññātamajānitabbaṃ;",
  "anya-e0605n27:4": "Sabbaṃ abhiññāsi yadatthi ñeyyaṃ,",
  "anya-e0605n27:5": "Tathāgato tena samantacakkhu.",
  "anya-e0605n27:6": "185.",
  "anya-e0605n27:7": " Iti mahitamanantākittisambhārasāraṃ,",
  "anya-e0605n27:8": "Sakaladasasahassīlokadhātumhi niccaṃ;",
  "anya-e0605n27:9": "Upacitasubhahetupayutānantakālaṃ,",
  "anya-e0605n27:10": "Tadiha sugatabodhisādhukaṃ cintanīyaṃ;",
  "anya-e0605n27:11": "186.",
  "anya-e0605n27:12": " Takkabyākaraṇañca dhammavinayaṃ sutvā pi yo paññavā,",
  "anya-e0605n27:13": "Tenāyaṃ sucisārabhūtavacanaṃ viññāyate kevalaṃ;",
  "anya-e0605n27:14": "Hetuñcāpi phalena tena saphalaṃ sampassamāno tato bodhiṃ saddahateva tassa mahatāvāyamato sambhavaṃ.",
  "anya-e0605n27:15": "187.",
  "anya-e0605n27:16": " Yo saddahanto pana tassa bodhiṃ,",
  "anya-e0605n27:17": "Vuttānusārena guṇerahādī;",
  "anya-e0605n27:18": "Katheti cintenti ca so muhuttaṃ,",
  "anya-e0605n27:19": "Ohāya pāpāni upeti santiṃ.",
  "anya-e0605n27:20": "188.",
  "anya-e0605n27:21": " Saddheyyā te cinteyyā te,",
  "anya-e0605n27:22": "Vandeyyā te pūjeyyāte;",
  "anya-e0605n27:23": "Buddholokāloke loke,",
  "anya-e0605n27:24": "Jāte netaṃ patthentena."
}