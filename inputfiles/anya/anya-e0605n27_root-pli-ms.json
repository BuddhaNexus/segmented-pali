{
  "anya-e0605n27:0": "Guṇadīpanīgāthā",
  "anya-e0605n27:1": "184.",
  "anya-e0605n27:2": " Na tassa adiṭṭhanamidhatthi kiñci,",
  "anya-e0605n27:3": "Ato aviññātamajānitabbaṁ;",
  "anya-e0605n27:4": "Sabbaṁ abhiññāsi yadatthi ñeyyaṁ,",
  "anya-e0605n27:5": "Tathāgato tena samantacakkhu.",
  "anya-e0605n27:6": "185.",
  "anya-e0605n27:7": " Iti mahitamanantākittisambhārasāraṁ,",
  "anya-e0605n27:8": "Sakaladasasahassīlokadhātumhi niccaṁ;",
  "anya-e0605n27:9": "Upacitasubhahetupayutānantakālaṁ,",
  "anya-e0605n27:10": "Tadiha sugatabodhisādhukaṁ cintanīyaṁ;",
  "anya-e0605n27:11": "186.",
  "anya-e0605n27:12": " Takkabyākaraṇañca dhammavinayaṁ sutvā pi yo paññavā,",
  "anya-e0605n27:13": "Tenāyaṁ sucisārabhūtavacanaṁ viññāyate kevalaṁ;",
  "anya-e0605n27:14": "Hetuñcāpi phalena tena saphalaṁ sampassamāno tato bodhiṁ saddahateva tassa mahatāvāyamato sambhavaṁ.",
  "anya-e0605n27:15": "187.",
  "anya-e0605n27:16": " Yo saddahanto pana tassa bodhiṁ,",
  "anya-e0605n27:17": "Vuttānusārena guṇerahādī;",
  "anya-e0605n27:18": "Katheti cintenti ca so muhuttaṁ,",
  "anya-e0605n27:19": "Ohāya pāpāni upeti santiṁ.",
  "anya-e0605n27:20": "188.",
  "anya-e0605n27:21": " Saddheyyā te cinteyyā te,",
  "anya-e0605n27:22": "Vandeyyā te pūjeyyāte;",
  "anya-e0605n27:23": "Buddholokāloke loke,",
  "anya-e0605n27:24": "Jāte netaṁ patthentena."
}