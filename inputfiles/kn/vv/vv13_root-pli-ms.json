{
  "vv13:0.1": "Vimānavatthu ",
  "vv13:0.2": "Itthivimāna ",
  "vv13:0.3": "Pīṭhavagga ",
  "vv13:0.4": "13. Paṭhamasuṇisāvimānavatthu ",
  "vv13:1.1": "“Abhikkantena vaṇṇena, ",
  "vv13:1.2": "yā tvaṁ tiṭṭhasi devate; ",
  "vv13:1.3": "Obhāsentī disā sabbā, ",
  "vv13:1.4": "osadhī viya tārakā. ",
  "vv13:2.1": "Kena tetādiso vaṇṇo, ",
  "vv13:2.2": "kena te idha mijjhati; ",
  "vv13:2.3": "Uppajjanti ca te bhogā, ",
  "vv13:2.4": "ye keci manaso piyā. ",
  "vv13:3.1": "Pucchāmi taṁ devi mahānubhāve, ",
  "vv13:3.2": "Manussabhūtā kimakāsi puññaṁ; ",
  "vv13:3.3": "Kenāsi evaṁ jalitānubhāvā, ",
  "vv13:3.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti. ",
  "vv13:4.1": "Sā devatā attamanā, ",
  "vv13:4.2": "moggallānena pucchitā; ",
  "vv13:4.3": "Pañhaṁ puṭṭhā viyākāsi, ",
  "vv13:4.4": "yassa kammassidaṁ phalaṁ. ",
  "vv13:5.1": "“Ahaṁ manussesu manussabhūtā, ",
  "vv13:5.2": "Suṇisā ahosiṁ sasurassa gehe. ",
  "vv13:6.1": "Addasaṁ virajaṁ bhikkhuṁ, ",
  "vv13:6.2": "vippasannamanāvilaṁ; ",
  "vv13:6.3": "Tassa adāsahaṁ pūvaṁ, ",
  "vv13:6.4": "pasannā sehi pāṇibhi; ",
  "vv13:6.5": "Bhāgaḍḍhabhāgaṁ datvāna, ",
  "vv13:6.6": "modāmi nandane vane. ",
  "vv13:7.1": "Tena metādiso vaṇṇo, ",
  "vv13:7.2": "tena me idha mijjhati; ",
  "vv13:7.3": "Uppajjanti ca me bhogā, ",
  "vv13:7.4": "ye keci manaso piyā. ",
  "vv13:8.1": "Akkhāmi te bhikkhu mahānubhāva, ",
  "vv13:8.2": "Manussabhūtā yamakāsi puññaṁ; ",
  "vv13:8.3": "Tenamhi evaṁ jalitānubhāvā, ",
  "vv13:8.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti. ",
  "vv13:9.1": "Paṭhamasuṇisāvimānaṁ terasamaṁ. "
}