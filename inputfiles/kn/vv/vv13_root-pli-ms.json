{
"vv13:1.1": "Vimānavatthu",
"vv13:2.1": "Itthivimāna",
"vv13:3.1": "Pīṭhavagga",
"vv13:4.1": "13. Paṭhamasuṇisāvimānavatthu",
"vv13:5.1": "“Abhikkantena vaṇṇena,",
"vv13:5.2": "yā tvaṃ tiṭṭhasi devate;",
"vv13:5.3": "Obhāsentī disā sabbā,",
"vv13:5.4": "osadhī viya tārakā.",
"vv13:6.1": "Kena tetādiso vaṇṇo,",
"vv13:6.2": "kena te idha mijjhati;",
"vv13:6.3": "Uppajjanti ca te bhogā,",
"vv13:6.4": "ye keci manaso piyā.",
"vv13:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv13:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv13:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv13:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv13:8.1": "Sā devatā attamanā,",
"vv13:8.2": "moggallānena pucchitā;",
"vv13:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv13:8.4": "yassa kammassidaṃ phalaṃ.",
"vv13:9.1": "“Ahaṃ manussesu manussabhūtā,",
"vv13:9.2": "Suṇisā ahosiṃ sasurassa gehe.",
"vv13:10.1": "Addasaṃ virajaṃ bhikkhuṃ,",
"vv13:10.2": "vippasannamanāvilaṃ;",
"vv13:10.3": "Tassa adāsahaṃ pūvaṃ,",
"vv13:10.4": "pasannā sehi pāṇibhi;",
"vv13:10.5": "Bhāgaḍḍhabhāgaṃ datvāna,",
"vv13:10.6": "modāmi nandane vane.",
"vv13:11.1": "Tena metādiso vaṇṇo,",
"vv13:11.2": "tena me idha mijjhati;",
"vv13:11.3": "Uppajjanti ca me bhogā,",
"vv13:11.4": "ye keci manaso piyā.",
"vv13:12.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv13:12.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv13:12.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv13:12.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv13:13.1": "Paṭhamasuṇisāvimānaṃ terasamaṃ."
}