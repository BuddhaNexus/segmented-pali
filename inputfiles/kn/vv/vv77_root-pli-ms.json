{
"vv77:1.1": "Vimānavatthu",
"vv77:2.1": "Purisavimāna",
"vv77:3.1": "Sunikkhittavagga",
"vv77:4.1": "3. Maṇithūṇavimānavatthu",
"vv77:5.1": "“Uccamidaṃ maṇithūṇaṃ vimānaṃ,",
"vv77:5.2": "Samantato dvādasa yojanāni;",
"vv77:5.3": "Kūṭāgārā sattasatā uḷārā,",
"vv77:5.4": "Veḷuriyathambhā rucakatthatā subhā.",
"vv77:6.1": "Tatthacchasi pivasi khādasi ca,",
"vv77:6.2": "Dibbā ca vīṇā pavadanti vagguṃ;",
"vv77:6.3": "Dibbā rasā kāmaguṇettha pañca,",
"vv77:6.4": "Nāriyo ca naccanti suvaṇṇachannā.",
"vv77:7.1": "Kena tetādiso vaṇṇo, … pe …",
"vv77:7.4": "vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv77:8.1": "So devaputto attamano, … pe …",
"vv77:8.4": "yassa kammassidaṃ phalaṃ.",
"vv77:9.1": "“Ahaṃ manussesu manussabhūto,",
"vv77:9.2": "Vivane pathe saṅkamanaṃ akāsiṃ;",
"vv77:9.3": "Ārāmarukkhāni ca ropayissaṃ,",
"vv77:9.4": "Piyā ca me sīlavanto ahesuṃ;",
"vv77:9.5": "Annañca pānañca pasannacitto,",
"vv77:9.6": "Sakkacca dānaṃ vipulaṃ adāsiṃ.",
"vv77:10.1": "Tena metādiso vaṇṇo, … pe …",
"vv77:10.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv77:11.1": "Maṇithūṇavimānaṃ tatiyaṃ."
}