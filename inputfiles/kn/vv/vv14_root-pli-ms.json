{
"vv14:1.1": "Vimānavatthu",
"vv14:2.1": "Itthivimāna",
"vv14:3.1": "Pīṭhavagga",
"vv14:4.1": "14. Dutiyasuṇisāvimānavatthu",
"vv14:5.1": "“Abhikkantena vaṇṇena,",
"vv14:5.2": "yā tvaṃ tiṭṭhasi devate;",
"vv14:5.3": "Obhāsentī disā sabbā,",
"vv14:5.4": "osadhī viya tārakā.",
"vv14:6.1": "Kena tetādiso vaṇṇo,",
"vv14:6.2": "kena te idha mijjhati;",
"vv14:6.3": "Uppajjanti ca te bhogā,",
"vv14:6.4": "ye keci manaso piyā.",
"vv14:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv14:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv14:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv14:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv14:8.1": "Sā devatā attamanā,",
"vv14:8.2": "moggallānena pucchitā;",
"vv14:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv14:8.4": "yassa kammassidaṃ phalaṃ.",
"vv14:9.1": "“Ahaṃ manussesu manussabhūtā,",
"vv14:9.2": "Suṇisā ahosiṃ sasurassa gehe.",
"vv14:10.1": "Addasaṃ virajaṃ bhikkhuṃ,",
"vv14:10.2": "vippasannamanāvilaṃ;",
"vv14:10.3": "Tassa adāsahaṃ bhāgaṃ,",
"vv14:10.4": "pasannā sehi pāṇibhi;",
"vv14:10.5": "Kummāsapiṇḍaṃ datvāna,",
"vv14:10.6": "modāmi nandane vane.",
"vv14:11.1": "Tena metādiso vaṇṇo,",
"vv14:11.2": "tena me idha mijjhati;",
"vv14:11.3": "Uppajjanti ca me bhogā,",
"vv14:11.4": "ye keci manaso piyā.",
"vv14:12.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv14:12.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv14:12.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv14:12.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv14:13.1": "Dutiyasuṇisāvimānaṃ cuddasamaṃ."
}