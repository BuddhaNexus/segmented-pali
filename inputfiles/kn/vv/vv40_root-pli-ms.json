{
  "vv40:0.1": "Vimānavatthu ",
  "vv40:0.2": "Itthivimāna ",
  "vv40:0.3": "Mañjiṭṭhakavagga ",
  "vv40:0.4": "2. Pabhassaravimānavatthu ",
  "vv40:1.1": "“Pabhassaravaravaṇṇanibhe, ",
  "vv40:1.2": "Surattavatthavasane; ",
  "vv40:1.3": "Mahiddhike candanaruciragatte, ",
  "vv40:1.4": "Kā tvaṁ subhe devate vandase mamaṁ. ",
  "vv40:2.1": "Pallaṅko ca te mahaggho, ",
  "vv40:2.2": "Nānāratanacittito ruciro; ",
  "vv40:2.3": "Yattha tvaṁ nisinnā virocasi, ",
  "vv40:2.4": "Devarājāriva nandane vane. ",
  "vv40:3.1": "Kiṁ tvaṁ pure sucaritamācarī bhadde, ",
  "vv40:3.2": "Kissa kammassa vipākaṁ; ",
  "vv40:3.3": "Anubhosi devalokasmiṁ, ",
  "vv40:3.4": "Devate pucchitācikkha; ",
  "vv40:3.5": "Kissa kammassidaṁ phalan”ti. ",
  "vv40:4.1": "“Piṇḍāya te carantassa, ",
  "vv40:4.2": "Mālaṁ phāṇitañca adadaṁ bhante; ",
  "vv40:4.3": "Tassa kammassidaṁ vipākaṁ, ",
  "vv40:4.4": "Anubhomi devalokasmiṁ. ",
  "vv40:5.1": "Hoti ca me anutāpo, ",
  "vv40:5.2": "Aparaddhaṁ dukkhitañca me bhante; ",
  "vv40:5.3": "Sāhaṁ dhammaṁ nāssosiṁ, ",
  "vv40:5.4": "Sudesitaṁ dhammarājena. ",
  "vv40:6.1": "Taṁ taṁ vadāmi bhaddante, ",
  "vv40:6.2": "‘Yassa me anukampiyo koci; ",
  "vv40:6.3": "Dhammesu taṁ samādapetha’, ",
  "vv40:6.4": "Sudesitaṁ dhammarājena. ",
  "vv40:7.1": "Yesaṁ atthi saddhā buddhe, ",
  "vv40:7.2": "dhamme ca saṅgharatane; ",
  "vv40:7.3": "Te maṁ ativirocanti, ",
  "vv40:7.4": "āyunā yasasā siriyā. ",
  "vv40:8.1": "Patāpena vaṇṇena uttaritarā, ",
  "vv40:8.2": "Aññe mahiddhikatarā mayā devā”ti. ",
  "vv40:9.1": "Pabhassaravimānaṁ dutiyaṁ. "
}