{
"vv23:1.1": "Vimānavatthu",
"vv23:2.1": "Itthivimāna",
"vv23:3.1": "Cittalatāvagga",
"vv23:4.1": "6. Soṇadinnāvimānavatthu",
"vv23:5.1": "“Abhikkantena vaṇṇena,",
"vv23:5.2": "yā tvaṃ tiṭṭhasi devate;",
"vv23:5.3": "Obhāsentī disā sabbā,",
"vv23:5.4": "osadhī viya tārakā.",
"vv23:6.1": "Kena tetādiso vaṇṇo,",
"vv23:6.2": "kena te idha mijjhati;",
"vv23:6.3": "Uppajjanti ca te bhogā,",
"vv23:6.4": "ye keci manaso piyā.",
"vv23:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv23:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv23:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv23:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv23:8.1": "Sā devatā attamanā,",
"vv23:8.2": "moggallānena pucchitā;",
"vv23:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv23:8.4": "yassa kammassidaṃ phalaṃ.",
"vv23:9.1": "“Soṇadinnāti maṃ aññaṃsu,",
"vv23:9.2": "nāḷandāyaṃ upāsikā;",
"vv23:9.3": "Saddhā sīlena sampannā,",
"vv23:9.4": "saṃvibhāgaratā sadā.",
"vv23:10.1": "Acchādanañca bhattañca,",
"vv23:10.2": "senāsanaṃ padīpiyaṃ;",
"vv23:10.3": "Adāsiṃ ujubhūtesu,",
"vv23:10.4": "vippasannena cetasā.",
"vv23:11.1": "Cātuddasiṃ pañcadasiṃ,",
"vv23:11.2": "yā ca pakkhassa aṭṭhamī;",
"vv23:11.3": "Pāṭihāriyapakkhañca,",
"vv23:11.4": "aṭṭhaṅgasusamāgataṃ.",
"vv23:12.1": "Uposathaṃ upavasissaṃ,",
"vv23:12.2": "sadā sīlesu saṃvutā;",
"vv23:12.3": "Saññamā saṃvibhāgā ca,",
"vv23:12.4": "vimānaṃ āvasāmahaṃ.",
"vv23:13.1": "Pāṇātipātā viratā,",
"vv23:13.2": "musāvādā ca saññatā;",
"vv23:13.3": "Theyyā ca aticārā ca,",
"vv23:13.4": "majjapānā ca ārakā.",
"vv23:14.1": "Pañcasikkhāpade ratā,",
"vv23:14.2": "ariyasaccāna kovidā;",
"vv23:14.3": "Upāsikā cakkhumato,",
"vv23:14.4": "gotamassa yasassino.",
"vv23:15.1": "Tena metādiso vaṇṇo, … pe …",
"vv23:15.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv23:16.1": "Soṇadinnāvimānaṃ chaṭṭhaṃ."
}