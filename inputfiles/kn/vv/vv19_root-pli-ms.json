{
"vv19:1.1": "Vimānavatthu",
"vv19:2.1": "Itthivimāna",
"vv19:3.1": "Cittalatāvagga",
"vv19:4.1": "2. Lakhumāvimānavatthu",
"vv19:5.1": "“Abhikkantena vaṇṇena,",
"vv19:5.2": "yā tvaṃ tiṭṭhasi devate;",
"vv19:5.3": "Obhāsentī disā sabbā,",
"vv19:5.4": "osadhī viya tārakā.",
"vv19:6.1": "Kena tetādiso vaṇṇo,",
"vv19:6.2": "kena te idha mijjhati;",
"vv19:6.3": "Uppajjanti ca te bhogā,",
"vv19:6.4": "ye keci manaso piyā.",
"vv19:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv19:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv19:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv19:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv19:8.1": "Sā devatā attamanā,",
"vv19:8.2": "moggallānena pucchitā;",
"vv19:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv19:8.4": "yassa kammassidaṃ phalaṃ.",
"vv19:9.1": "“Kevaṭṭadvārā nikkhamma,",
"vv19:9.2": "ahu mayhaṃ nivesanaṃ;",
"vv19:9.3": "Tattha sañcaramānānaṃ,",
"vv19:9.4": "sāvakānaṃ mahesinaṃ.",
"vv19:10.1": "Odanaṃ kummāsaṃ ḍākaṃ,",
"vv19:10.2": "loṇasovīrakañcahaṃ;",
"vv19:10.3": "Adāsiṃ ujubhūtesu,",
"vv19:10.4": "vippasannena cetasā.",
"vv19:11.1": "Cātuddasiṃ pañcadasiṃ,",
"vv19:11.2": "yā ca pakkhassa aṭṭhamī;",
"vv19:11.3": "Pāṭihāriyapakkhañca,",
"vv19:11.4": "aṭṭhaṅgasusamāgataṃ.",
"vv19:12.1": "Uposathaṃ upavasissaṃ,",
"vv19:12.2": "sadā sīlesu saṃvutā;",
"vv19:12.3": "Saññamā saṃvibhāgā ca,",
"vv19:12.4": "vimānaṃ āvasāmahaṃ.",
"vv19:13.1": "Pāṇātipātā viratā,",
"vv19:13.2": "musāvādā ca saññatā;",
"vv19:13.3": "Theyyā ca aticārā ca,",
"vv19:13.4": "majjapānā ca ārakā.",
"vv19:14.1": "Pañcasikkhāpade ratā,",
"vv19:14.2": "ariyasaccāna kovidā;",
"vv19:14.3": "Upāsikā cakkhumato,",
"vv19:14.4": "gotamassa yasassino.",
"vv19:15.1": "Tena metādiso vaṇṇo, … pe …",
"vv19:15.4": "Vaṇṇo ca me sabbadisā pabhāsatīti.",
"vv19:16.1": "Mama ca, bhante, vacanena bhagavato pāde sirasā vandeyyāsi—",
"vv19:16.2": "‘lakhumā nāma, bhante, upāsikā bhagavato pāde sirasā vandatī’ti.",
"vv19:16.3": "Anacchariyaṃ kho panetaṃ, bhante, yaṃ maṃ bhagavā aññatarasmiṃ sāmaññaphale byākareyya.",
"vv19:16.4": "Taṃ bhagavā sakadāgāmiphale byākāsī”ti.",
"vv19:17.1": "Lakhumāvimānaṃ dutiyaṃ."
}