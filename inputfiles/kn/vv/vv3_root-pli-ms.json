{
"vv3:1.1": "Vimānavatthu",
"vv3:2.1": "Itthivimāna",
"vv3:3.1": "Pīṭhavagga",
"vv3:4.1": "3. Tatiyapīṭhavimānavatthu",
"vv3:5.1": "“Pīṭhaṃ te sovaṇṇamayaṃ uḷāraṃ,",
"vv3:5.2": "Manojavaṃ gacchati yenakāmaṃ;",
"vv3:5.3": "Alaṅkate malyadhare suvatthe,",
"vv3:5.4": "Obhāsasi vijjurivabbhakūṭaṃ.",
"vv3:6.1": "Kena tetādiso vaṇṇo,",
"vv3:6.2": "kena te idha mijjhati;",
"vv3:6.3": "Uppajjanti ca te bhogā,",
"vv3:6.4": "ye keci manaso piyā.",
"vv3:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv3:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv3:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv3:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv3:8.1": "Sā devatā attamanā,",
"vv3:8.2": "moggallānena pucchitā;",
"vv3:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv3:8.4": "yassa kammassidaṃ phalaṃ.",
"vv3:9.1": "“Appassa kammassa phalaṃ mamedaṃ,",
"vv3:9.2": "Yenamhi evaṃ jalitānubhāvā;",
"vv3:9.3": "Ahaṃ manussesu manussabhūtā,",
"vv3:9.4": "Purimāya jātiyā manussaloke.",
"vv3:10.1": "Addasaṃ virajaṃ bhikkhuṃ,",
"vv3:10.2": "vippasannamanāvilaṃ;",
"vv3:10.3": "Tassa adāsahaṃ pīṭhaṃ,",
"vv3:10.4": "pasannā sehi pāṇibhi.",
"vv3:11.1": "Tena metādiso vaṇṇo,",
"vv3:11.2": "tena me idha mijjhati;",
"vv3:11.3": "Uppajjanti ca me bhogā,",
"vv3:11.4": "ye keci manaso piyā.",
"vv3:12.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv3:12.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv3:12.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv3:12.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv3:13.1": "Tatiyapīṭhavimānaṃ tatiyaṃ."
}