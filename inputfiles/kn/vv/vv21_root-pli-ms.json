{
"vv21:1.1": "Vimānavatthu",
"vv21:2.1": "Itthivimāna",
"vv21:3.1": "Cittalatāvagga",
"vv21:4.1": "4. Caṇḍālivimānavatthu",
"vv21:5.1": "“Caṇḍāli vanda pādāni,",
"vv21:5.2": "gotamassa yasassino;",
"vv21:5.3": "Tameva anukampāya,",
"vv21:5.4": "aṭṭhāsi isisattamo.",
"vv21:6.1": "Abhippasādehi manaṃ,",
"vv21:6.2": "arahantamhi tādini;",
"vv21:6.3": "Khippaṃ pañjalikā vanda,",
"vv21:6.4": "parittaṃ tava jīvitan”ti.",
"vv21:7.1": "Coditā bhāvitattena,",
"vv21:7.2": "sarīrantimadhārinā;",
"vv21:7.3": "Caṇḍālī vandi pādāni,",
"vv21:7.4": "gotamassa yasassino.",
"vv21:8.1": "Tamenaṃ avadhī gāvī,",
"vv21:8.2": "caṇḍāliṃ pañjaliṃ ṭhitaṃ;",
"vv21:8.3": "Namassamānaṃ sambuddhaṃ,",
"vv21:8.4": "andhakāre pabhaṅkaranti.",
"vv21:9.1": "“Khīṇāsavaṃ vigatarajaṃ anejaṃ,",
"vv21:9.2": "Ekaṃ araññamhi raho nisinnaṃ;",
"vv21:9.3": "Deviddhipattā upasaṅkamitvā,",
"vv21:9.4": "Vandāmi taṃ vīra mahānubhāvan”ti.",
"vv21:10.1": "“Suvaṇṇavaṇṇā jalitā mahāyasā,",
"vv21:10.2": "Vimānamoruyha anekacittā;",
"vv21:10.3": "Parivāritā accharāsaṅgaṇena,",
"vv21:10.4": "Kā tvaṃ subhe devate vandase maman”ti.",
"vv21:11.1": "“Ahaṃ bhaddante caṇḍālī,",
"vv21:11.2": "tayā vīrena pesitā;",
"vv21:11.3": "Vandiṃ arahato pāde,",
"vv21:11.4": "gotamassa yasassino.",
"vv21:12.1": "Sāhaṃ vanditvā pādāni,",
"vv21:12.2": "cutā caṇḍālayoniyā;",
"vv21:12.3": "Vimānaṃ sabbato bhaddaṃ,",
"vv21:12.4": "upapannamhi nandane.",
"vv21:13.1": "Accharānaṃ satasahassaṃ,",
"vv21:13.2": "purakkhatvāna tiṭṭhati;",
"vv21:13.3": "Tāsāhaṃ pavarā seṭṭhā,",
"vv21:13.4": "vaṇṇena yasasāyunā.",
"vv21:14.1": "Pahūtakatakalyāṇā,",
"vv21:14.2": "Sampajānā paṭissatā;",
"vv21:14.3": "Muniṃ kāruṇikaṃ loke,",
"vv21:14.4": "Taṃ bhante vanditumāgatā”ti.",
"vv21:15.1": "Idaṃ vatvāna caṇḍālī,",
"vv21:15.2": "kataññū katavedinī;",
"vv21:15.3": "Vanditvā arahato pāde,",
"vv21:15.4": "tatthevantaradhāyathāti.",
"vv21:16.1": "Caṇḍālivimānaṃ catutthaṃ."
}