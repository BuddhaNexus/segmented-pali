{
"vv30:1.1": "Vimānavatthu",
"vv30:2.1": "Itthivimāna",
"vv30:3.1": "Pāricchattakavagga",
"vv30:4.1": "2. Ucchudāyikāvimānavatthu",
"vv30:5.1": "“Obhāsayitvā pathaviṃ sadevakaṃ,",
"vv30:5.2": "Atirocasi candimasūriyā viya;",
"vv30:5.3": "Siriyā ca vaṇṇena yasena tejasā,",
"vv30:5.4": "Brahmāva deve tidase sahindake.",
"vv30:6.1": "Pucchāmi taṃ uppalamāladhārinī,",
"vv30:6.2": "Āveḷinī kañcanasannibhattace;",
"vv30:6.3": "Alaṅkate uttamavatthadhārinī,",
"vv30:6.4": "Kā tvaṃ subhe devate vandase mamaṃ.",
"vv30:7.1": "Kiṃ tvaṃ pure kammamakāsi attanā,",
"vv30:7.2": "Manussabhūtā purimāya jātiyā;",
"vv30:7.3": "Dānaṃ suciṇṇaṃ atha sīlasaṃyamaṃ,",
"vv30:7.4": "Kenūpapannā sugatiṃ yasassinī;",
"vv30:7.5": "Devate pucchitācikkha,",
"vv30:7.6": "Kissa kammassidaṃ phalan”ti.",
"vv30:8.1": "“Idāni bhante imameva gāmaṃ,",
"vv30:8.2": "Piṇḍāya amhākaṃ gharaṃ upāgami;",
"vv30:8.3": "Tato te ucchussa adāsi khaṇḍikaṃ,",
"vv30:8.4": "Pasannacittā atulāya pītiyā.",
"vv30:9.1": "Sassu ca pacchā anuyuñjate mamaṃ,",
"vv30:9.2": "Kahaṃ nu ucchuṃ vadhuke avākiri;",
"vv30:9.3": "Na chaḍḍitaṃ no pana khāditaṃ mayā,",
"vv30:9.4": "Santassa bhikkhussa sayaṃ adāsahaṃ.",
"vv30:10.1": "Tuyhaṃ nvidaṃ issariyaṃ atho mama,",
"vv30:10.2": "Itissā sassu paribhāsate mamaṃ;",
"vv30:10.3": "Pīṭhaṃ gahetvā pahāraṃ adāsi me,",
"vv30:10.4": "Tato cutā kālakatāmhi devatā.",
"vv30:11.1": "Tadeva kammaṃ kusalaṃ kataṃ mayā,",
"vv30:11.2": "Sukhañca kammaṃ anubhomi attanā;",
"vv30:11.3": "Devehi saddhiṃ paricārayāmahaṃ,",
"vv30:11.4": "Modāmahaṃ kāmaguṇehi pañcahi.",
"vv30:12.1": "Tadeva kammaṃ kusalaṃ kataṃ mayā,",
"vv30:12.2": "Sukhañca kammaṃ anubhomi attanā;",
"vv30:12.3": "Devindaguttā tidasehi rakkhitā,",
"vv30:12.4": "Samappitā kāmaguṇehi pañcahi.",
"vv30:13.1": "Etādisaṃ puññaphalaṃ anappakaṃ,",
"vv30:13.2": "Mahāvipākā mama ucchudakkhiṇā;",
"vv30:13.3": "Devehi saddhiṃ paricārayāmahaṃ,",
"vv30:13.4": "Modāmahaṃ kāmaguṇehi pañcahi.",
"vv30:14.1": "Etādisaṃ puññaphalaṃ anappakaṃ,",
"vv30:14.2": "Mahājutikā mama ucchudakkhiṇā;",
"vv30:14.3": "Devindaguttā tidasehi rakkhitā,",
"vv30:14.4": "Sahassanettoriva nandane vane.",
"vv30:15.1": "Tuvañca bhante anukampakaṃ viduṃ,",
"vv30:15.2": "Upecca vandiṃ kusalañca pucchisaṃ;",
"vv30:15.3": "Tato te ucchussa adāsi khaṇḍikaṃ,",
"vv30:15.4": "Pasannacittā atulāya pītiyā”ti.",
"vv30:16.1": "Ucchudāyikāvimānaṃ dutiyaṃ."
}