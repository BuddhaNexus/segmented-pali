{
  "vv47:0.1": "Vimānavatthu ",
  "vv47:0.2": "Itthivimāna ",
  "vv47:0.3": "Mañjiṭṭhakavagga ",
  "vv47:0.4": "9. Pītavimānavatthu ",
  "vv47:1.1": "“Pītavatthe pītadhaje, ",
  "vv47:1.2": "pītālaṅkārabhūsite; ",
  "vv47:1.3": "Pītacandanalittaṅge, ",
  "vv47:1.4": "pītauppalamālinī. ",
  "vv47:2.1": "Pītapāsādasayane, ",
  "vv47:2.2": "pītāsane pītabhājane; ",
  "vv47:2.3": "Pītachatte pītarathe, ",
  "vv47:2.4": "pītasse pītabījane. ",
  "vv47:3.1": "Kiṁ kammamakarī bhadde, ",
  "vv47:3.2": "pubbe mānusake bhave; ",
  "vv47:3.3": "Devate pucchitācikkha, ",
  "vv47:3.4": "kissa kammassidaṁ phalan”ti. ",
  "vv47:4.1": "“Kosātakī nāma latatthi bhante, ",
  "vv47:4.2": "Tittikā anabhicchitā; ",
  "vv47:4.3": "Tassā cattāri pupphāni, ",
  "vv47:4.4": "Thūpaṁ abhihariṁ ahaṁ. ",
  "vv47:5.1": "Satthu sarīramuddissa, ",
  "vv47:5.2": "vippasannena cetasā; ",
  "vv47:5.3": "Nāssa maggaṁ avekkhissaṁ, ",
  "vv47:5.4": "na taggamanasā satī. ",
  "vv47:6.1": "Tato maṁ avadhī gāvī, ",
  "vv47:6.2": "thūpaṁ apattamānasaṁ; ",
  "vv47:6.3": "Tañcāhaṁ abhisañceyyaṁ, ",
  "vv47:6.4": "bhiyyo nūna ito siyā. ",
  "vv47:7.1": "Tena kammena devinda, ",
  "vv47:7.2": "maghavā devakuñjara; ",
  "vv47:7.3": "Pahāya mānusaṁ dehaṁ, ",
  "vv47:7.4": "tava sahabyamāgatā”ti. ",
  "vv47:8.1": "Idaṁ sutvā tidasādhipati, ",
  "vv47:8.2": "Maghavā devakuñjaro; ",
  "vv47:8.3": "Tāvatiṁse pasādento, ",
  "vv47:8.4": "Mātaliṁ etadabravi. ",
  "vv47:9.1": "“Passa mātali accheraṁ, ",
  "vv47:9.2": "cittaṁ kammaphalaṁ idaṁ; ",
  "vv47:9.3": "Appakampi kataṁ deyyaṁ, ",
  "vv47:9.4": "puññaṁ hoti mahapphalaṁ. ",
  "vv47:10.1": "Natthi citte pasannamhi, ",
  "vv47:10.2": "appakā nāma dakkhiṇā; ",
  "vv47:10.3": "Tathāgate vā sambuddhe, ",
  "vv47:10.4": "atha vā tassa sāvake. ",
  "vv47:11.1": "Ehi mātali amhepi, ",
  "vv47:11.2": "bhiyyo bhiyyo mahemase; ",
  "vv47:11.3": "Tathāgatassa dhātuyo, ",
  "vv47:11.4": "sukho puññāna muccayo. ",
  "vv47:12.1": "Tiṭṭhante nibbute cāpi, ",
  "vv47:12.2": "same citte samaṁ phalaṁ; ",
  "vv47:12.3": "Cetopaṇidhihetu hi, ",
  "vv47:12.4": "sattā gacchanti suggatiṁ. ",
  "vv47:13.1": "Bahūnaṁ vata atthāya, ",
  "vv47:13.2": "uppajjanti tathāgatā; ",
  "vv47:13.3": "Yattha kāraṁ karitvāna, ",
  "vv47:13.4": "saggaṁ gacchanti dāyakā”ti. ",
  "vv47:14.1": "Pītavimānaṁ navamaṁ. "
}