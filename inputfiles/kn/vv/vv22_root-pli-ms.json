{
  "vv22:0.1": "Vimānavatthu ",
  "vv22:0.2": "Itthivimāna ",
  "vv22:0.3": "Cittalatāvagga ",
  "vv22:0.4": "5. Bhadditthivimānavatthu ",
  "vv22:1.1": "“Nīlā pītā ca kāḷā ca, ",
  "vv22:1.2": "mañjiṭṭhā atha lohitā; ",
  "vv22:1.3": "Uccāvacānaṁ vaṇṇānaṁ, ",
  "vv22:1.4": "kiñjakkhaparivāritā. ",
  "vv22:2.1": "Mandāravānaṁ pupphānaṁ, ",
  "vv22:2.2": "mālaṁ dhāresi muddhani; ",
  "vv22:2.3": "Nayime aññesu kāyesu, ",
  "vv22:2.4": "rukkhā santi sumedhase. ",
  "vv22:3.1": "Kena kāyaṁ upapannā, ",
  "vv22:3.2": "tāvatiṁsaṁ yasassinī; ",
  "vv22:3.3": "Devate pucchitācikkha, ",
  "vv22:3.4": "kissa kammassidaṁ phalan”ti. ",
  "vv22:4.1": "“Bhadditthikāti maṁ aññaṁsu, ",
  "vv22:4.2": "Kimilāyaṁ upāsikā; ",
  "vv22:4.3": "Saddhā sīlena sampannā, ",
  "vv22:4.4": "Saṁvibhāgaratā sadā. ",
  "vv22:5.1": "Acchādanañca bhattañca, ",
  "vv22:5.2": "senāsanaṁ padīpiyaṁ; ",
  "vv22:5.3": "Adāsiṁ ujubhūtesu, ",
  "vv22:5.4": "vippasannena cetasā. ",
  "vv22:6.1": "Cātuddasiṁ pañcadasiṁ, ",
  "vv22:6.2": "yā ca pakkhassa aṭṭhamī; ",
  "vv22:6.3": "Pāṭihāriyapakkhañca, ",
  "vv22:6.4": "aṭṭhaṅgasusamāgataṁ. ",
  "vv22:7.1": "Uposathaṁ upavasissaṁ, ",
  "vv22:7.2": "sadā sīlesu saṁvutā; ",
  "vv22:7.3": "Saññamā saṁvibhāgā ca, ",
  "vv22:7.4": "vimānaṁ āvasāmahaṁ. ",
  "vv22:8.1": "Pāṇātipātā viratā, ",
  "vv22:8.2": "musāvādā ca saññatā; ",
  "vv22:8.3": "Theyyā ca aticārā ca, ",
  "vv22:8.4": "majjapānā ca ārakā. ",
  "vv22:9.1": "Pañcasikkhāpade ratā, ",
  "vv22:9.2": "Ariyasaccāna kovidā; ",
  "vv22:9.3": "Upāsikā cakkhumato, ",
  "vv22:9.4": "Appamādavihārinī; ",
  "vv22:9.5": "Katāvāsā katakusalā tato cutā, ",
  "vv22:9.6": "Sayaṁpabhā anuvicarāmi nandanaṁ. ",
  "vv22:10.1": "Bhikkhū cāhaṁ paramahitānukampake, ",
  "vv22:10.2": "Abhojayiṁ tapassiyugaṁ mahāmuniṁ; ",
  "vv22:10.3": "Katāvāsā katakusalā tato cutā, ",
  "vv22:10.4": "Sayaṁpabhā anuvicarāmi nandanaṁ. ",
  "vv22:11.1": "Aṭṭhaṅgikaṁ aparimitaṁ sukhāvahaṁ, ",
  "vv22:11.2": "Uposathaṁ satatamupāvasiṁ ahaṁ; ",
  "vv22:11.3": "Katāvāsā katakusalā tato cutā, ",
  "vv22:11.4": "Sayaṁpabhā anuvicarāmi nandanan”ti. ",
  "vv22:12.1": "Bhadditthivimānaṁ pañcamaṁ. "
}