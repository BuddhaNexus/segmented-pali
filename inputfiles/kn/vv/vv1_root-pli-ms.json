{
"vv1:1.1": "Vimānavatthu",
"vv1:2.1": "Itthivimāna",
"vv1:3.1": "Pīṭhavagga",
"vv1:4.1": "1. Paṭhamapīṭhavimānavatthu",
"vv1:5.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
"vv1:6.1": "“Pīṭhaṃ te sovaṇṇamayaṃ uḷāraṃ,",
"vv1:6.2": "Manojavaṃ gacchati yenakāmaṃ;",
"vv1:6.3": "Alaṅkate malyadhare suvatthe,",
"vv1:6.4": "Obhāsasi vijjurivabbhakūṭaṃ.",
"vv1:7.1": "Kena tetādiso vaṇṇo,",
"vv1:7.2": "kena te idha mijjhati;",
"vv1:7.3": "Uppajjanti ca te bhogā,",
"vv1:7.4": "ye keci manaso piyā.",
"vv1:8.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv1:8.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv1:8.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv1:8.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv1:9.1": "Sā devatā attamanā,",
"vv1:9.2": "moggallānena pucchitā;",
"vv1:9.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv1:9.4": "yassa kammassidaṃ phalaṃ.",
"vv1:10.1": "“Ahaṃ manussesu manussabhūtā,",
"vv1:10.2": "Abbhāgatānāsanakaṃ adāsiṃ;",
"vv1:10.3": "Abhivādayiṃ añjalikaṃ akāsiṃ,",
"vv1:10.4": "Yathānubhāvañca adāsi dānaṃ.",
"vv1:11.1": "Tena metādiso vaṇṇo,",
"vv1:11.2": "tena me idha mijjhati;",
"vv1:11.3": "Uppajjanti ca me bhogā,",
"vv1:11.4": "ye keci manaso piyā.",
"vv1:12.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv1:12.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv1:12.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv1:12.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv1:13.1": "Paṭhamapīṭhavimānaṃ paṭhamaṃ."
}