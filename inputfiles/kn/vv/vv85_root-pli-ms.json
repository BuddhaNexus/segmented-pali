{
"vv85:1.1": "Vimānavatthu",
"vv85:2.1": "Purisavimāna",
"vv85:3.1": "Sunikkhittavagga",
"vv85:4.1": "11. Sunikkhittavimānavatthu",
"vv85:5.1": "“Uccamidaṃ maṇithūṇaṃ vimānaṃ,",
"vv85:5.2": "Samantato dvādasa yojanāni;",
"vv85:5.3": "Kūṭāgārā sattasatā uḷārā,",
"vv85:5.4": "Veḷuriyathambhā rucakatthatā subhā.",
"vv85:6.1": "Tatthacchasi pivasi khādasi ca,",
"vv85:6.2": "Dibbā ca vīṇā pavadanti vagguṃ;",
"vv85:6.3": "Dibbā rasā kāmaguṇettha pañca,",
"vv85:6.4": "Nāriyo ca naccanti suvaṇṇachannā.",
"vv85:7.1": "Kena tetādiso vaṇṇo,",
"vv85:7.2": "kena te idha mijjhati;",
"vv85:7.3": "Uppajjanti ca te bhogā,",
"vv85:7.4": "ye keci manaso piyā.",
"vv85:8.1": "Pucchāmi taṃ deva mahānubhāva,",
"vv85:8.2": "Manussabhūto kimakāsi puññaṃ;",
"vv85:8.3": "Kenāsi evaṃ jalitānubhāvo,",
"vv85:8.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv85:9.1": "So devaputto attamano,",
"vv85:9.2": "moggallānena pucchito;",
"vv85:9.3": "Pañhaṃ puṭṭho viyākāsi,",
"vv85:9.4": "yassa kammassidaṃ phalaṃ.",
"vv85:10.1": "“Dunnikkhittaṃ mālaṃ sunikkhipitvā,",
"vv85:10.2": "Patiṭṭhapetvā sugatassa thūpe;",
"vv85:10.3": "Mahiddhiko camhi mahānubhāvo,",
"vv85:10.4": "Dibbehi kāmehi samaṅgibhūto.",
"vv85:11.1": "Tena metādiso vaṇṇo,",
"vv85:11.2": "tena me idha mijjhati;",
"vv85:11.3": "Uppajjanti ca me bhogā,",
"vv85:11.4": "ye keci manaso piyā.",
"vv85:12.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv85:12.2": "Manussabhūto yamahaṃ akāsiṃ;",
"vv85:12.3": "Tenamhi evaṃ jalitānubhāvo,",
"vv85:12.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv85:13.1": "Sunikkhittavimānaṃ ekādasamaṃ.",
"vv85:13.2": "Sunikkhittavaggo sattamo.",
"vv85:14.1": "Tassuddānaṃ",
"vv85:15.1": "Dve daliddā vanavihārā,",
"vv85:15.2": "Bhatako gopālakaṇḍako;",
"vv85:15.3": "Anekavaṇṇamaṭṭhakuṇḍalī,",
"vv85:15.4": "Serīsako sunikkhittaṃ;",
"vv85:15.5": "Purisānaṃ tatiyo vaggo pavuccatīti.",
"vv85:16.1": "Bhāṇavāraṃ catutthaṃ.",
"vv85:17.1": "Vimānavatthupāḷi niṭṭhitā."
}