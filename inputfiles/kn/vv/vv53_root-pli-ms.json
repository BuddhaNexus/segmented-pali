{
"vv53:1.1": "Vimānavatthu",
"vv53:2.1": "Purisavimāna",
"vv53:3.1": "Mahārathavagga",
"vv53:4.1": "3. Chattamāṇavakavimānavatthu",
"vv53:5.1": "“Yo vadataṃ pavaro manujesu,",
"vv53:5.2": "Sakyamunī bhagavā katakicco;",
"vv53:5.3": "Pāragato balaviriyasamaṅgī,",
"vv53:5.4": "Taṃ sugataṃ saraṇatthamupehi.",
"vv53:6.1": "Rāgavirāgamanejamasokaṃ,",
"vv53:6.2": "Dhammamasaṅkhatamappaṭikūlaṃ;",
"vv53:6.3": "Madhuramimaṃ paguṇaṃ suvibhattaṃ,",
"vv53:6.4": "Dhammamimaṃ saraṇatthamupehi.",
"vv53:7.1": "Yattha ca dinna mahapphalamāhu,",
"vv53:7.2": "Catūsu sucīsu purisayugesu;",
"vv53:7.3": "Aṭṭha ca puggaladhammadasā te,",
"vv53:7.4": "Saṃghamimaṃ saraṇatthamupehi.",
"vv53:8.1": "Na tathā tapati nabhe sūriyo,",
"vv53:8.2": "Cando ca na bhāsati na phusso;",
"vv53:8.3": "Yathā atulamidaṃ mahappabhāsaṃ,",
"vv53:8.4": "Ko nu tvaṃ tidivā mahiṃ upāgā.",
"vv53:9.1": "Chindati raṃsī pabhaṅkarassa,",
"vv53:9.2": "Sādhikavīsatiyojanāni ābhā;",
"vv53:9.3": "Rattimapi yathā divaṃ karoti,",
"vv53:9.4": "Parisuddhaṃ vimalaṃ subhaṃ vimānaṃ.",
"vv53:10.1": "Bahupadumavicitrapuṇḍarīkaṃ,",
"vv53:10.2": "Vokiṇṇaṃ kusumehi nekacittaṃ;",
"vv53:10.3": "Arajavirajahemajālachannaṃ,",
"vv53:10.4": "Ākāse tapati yathāpi sūriyo.",
"vv53:11.1": "Rattambarapītavāsasāhi,",
"vv53:11.2": "Agarupiyaṅgucandanussadāhi;",
"vv53:11.3": "Kañcanatanusannibhattacāhi,",
"vv53:11.4": "Paripūraṃ gaganaṃva tārakāhi.",
"vv53:12.1": "Naranāriyo bahuketthanekavaṇṇā,",
"vv53:12.2": "Kusumavibhūsitābharaṇettha sumanā;",
"vv53:12.3": "Anilapamuñcitā pavanti surabhiṃ,",
"vv53:12.4": "Tapaniyavitatā suvaṇṇachannā.",
"vv53:13.1": "Kissa saṃyamassa ayaṃ vipāko,",
"vv53:13.2": "Kenāsi kammaphalenidhūpapanno;",
"vv53:13.3": "Yathā ca te adhigatamidaṃ vimānaṃ,",
"vv53:13.4": "Tadanupadaṃ avacāsi iṅgha puṭṭho”ti.",
"vv53:14.1": "“Sayamidha pathe samecca māṇavena,",
"vv53:14.2": "Satthānusāsi anukampamāno;",
"vv53:14.3": "Tava ratanavarassa dhammaṃ sutvā,",
"vv53:14.4": "Karissāmīti ca bravittha chatto.",
"vv53:15.1": "Jinavarapavaraṃ upehi saraṇaṃ,",
"vv53:15.2": "Dhammañcāpi tatheva bhikkhusaṃghaṃ;",
"vv53:15.3": "Noti paṭhamaṃ avocahaṃ bhante,",
"vv53:15.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
"vv53:16.1": "Mā ca pāṇavadhaṃ vividhaṃ carassu asuciṃ,",
"vv53:16.2": "Na hi pāṇesu asaññataṃ avaṇṇayiṃsu sappaññā;",
"vv53:16.3": "Noti paṭhamaṃ avocahaṃ bhante,",
"vv53:16.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
"vv53:17.1": "Mā ca parajanassa rakkhitampi,",
"vv53:17.2": "Ādātabbamamaññitho adinnaṃ;",
"vv53:17.3": "Noti paṭhamaṃ avocahaṃ bhante,",
"vv53:17.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
"vv53:18.1": "Mā ca parajanassa rakkhitāyo,",
"vv53:18.2": "Parabhariyā agamā anariyametaṃ;",
"vv53:18.3": "Noti paṭhamaṃ avocahaṃ bhante,",
"vv53:18.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
"vv53:19.1": "Mā ca vitathaṃ aññathā abhāṇi,",
"vv53:19.2": "Na hi musāvādaṃ avaṇṇayiṃsu sappaññā;",
"vv53:19.3": "Noti paṭhamaṃ avocahaṃ bhante,",
"vv53:19.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
"vv53:20.1": "Yena ca purisassa apeti saññā,",
"vv53:20.2": "Taṃ majjaṃ parivajjayassu sabbaṃ;",
"vv53:20.3": "Noti paṭhamaṃ avocahaṃ bhante,",
"vv53:20.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
"vv53:21.1": "Svāhaṃ idha pañca sikkhā karitvā,",
"vv53:21.2": "Paṭipajjitvā tathāgatassa dhamme;",
"vv53:21.3": "Dvepathamagamāsiṃ coramajjhe,",
"vv53:21.4": "Te maṃ tattha vadhiṃsu bhogahetu.",
"vv53:22.1": "Ettakamidaṃ anussarāmi kusalaṃ,",
"vv53:22.2": "Tato paraṃ na me vijjati aññaṃ;",
"vv53:22.3": "Tena sucaritena kammunāhaṃ,",
"vv53:22.4": "Uppanno tidivesu kāmakāmī.",
"vv53:23.1": "Passa khaṇamuhuttasaññamassa,",
"vv53:23.2": "Anudhammappaṭipattiyā vipākaṃ;",
"vv53:23.3": "Jalamiva yasasā samekkhamānā,",
"vv53:23.4": "Bahukā maṃ pihayanti hīnakammā.",
"vv53:24.1": "Passa katipayāya desanāya,",
"vv53:24.2": "Sugatiñcamhi gato sukhañca patto;",
"vv53:24.3": "Ye ca te satataṃ suṇanti dhammaṃ,",
"vv53:24.4": "Maññe te amataṃ phusanti khemaṃ.",
"vv53:25.1": "Appampi kataṃ mahāvipākaṃ,",
"vv53:25.2": "Vipulaṃ hoti tathāgatassa dhamme;",
"vv53:25.3": "Passa katapuññatāya chatto,",
"vv53:25.4": "Obhāseti pathaviṃ yathāpi sūriyo.",
"vv53:26.1": "Kimidaṃ kusalaṃ kimācarema,",
"vv53:26.2": "Icceke hi samecca mantayanti;",
"vv53:26.3": "Te mayaṃ punareva laddha mānusattaṃ,",
"vv53:26.4": "Paṭipannā viharemu sīlavanto.",
"vv53:27.1": "Bahukāro anukampako ca satthā,",
"vv53:27.2": "Iti me sati agamā divā divassa;",
"vv53:27.3": "Svāhaṃ upagatomhi saccanāmaṃ,",
"vv53:27.4": "Anukampassu punapi suṇemu dhammaṃ.",
"vv53:28.1": "Ye cidha pajahanti kāmarāgaṃ,",
"vv53:28.2": "Bhavarāgānusayañca pahāya mohaṃ;",
"vv53:28.3": "Na ca te punamupenti gabbhaseyyaṃ,",
"vv53:28.4": "Parinibbānagatā hi sītibhūtā”ti.",
"vv53:29.1": "Chattamāṇavakavimānaṃ tatiyaṃ."
}