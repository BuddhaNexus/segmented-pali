{
"vv41:1.1": "Vimānavatthu",
"vv41:2.1": "Itthivimāna",
"vv41:3.1": "Mañjiṭṭhakavagga",
"vv41:4.1": "3. Nāgavimānavatthu",
"vv41:5.1": "“Alaṅkatā maṇikañcanācitaṃ,",
"vv41:5.2": "Sovaṇṇajālacitaṃ mahantaṃ;",
"vv41:5.3": "Abhiruyha gajavaraṃ sukappitaṃ,",
"vv41:5.4": "Idhāgamā vehāyasaṃ antalikkhe.",
"vv41:6.1": "Nāgassa dantesu duvesu nimmitā,",
"vv41:6.2": "Acchodakā paduminiyo suphullā;",
"vv41:6.3": "Padumesu ca tūriyagaṇā pabhijjare,",
"vv41:6.4": "Imā ca naccanti manoharāyo.",
"vv41:7.1": "Deviddhipattāsi mahānubhāve,",
"vv41:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv41:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv41:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv41:8.1": "“Bārāṇasiyaṃ upasaṅkamitvā,",
"vv41:8.2": "Buddhassahaṃ vatthayugaṃ adāsiṃ;",
"vv41:8.3": "Pādāni vanditvā chamā nisīdiṃ,",
"vv41:8.4": "Vittā cahaṃ añjalikaṃ akāsiṃ.",
"vv41:9.1": "Buddho ca me kañcanasannibhattaco,",
"vv41:9.2": "Adesayi samudayadukkhaniccataṃ;",
"vv41:9.3": "Asaṅkhataṃ dukkhanirodhasassataṃ,",
"vv41:9.4": "Maggaṃ adesayi yato vijānisaṃ.",
"vv41:10.1": "Appāyukī kālakatā tato cutā,",
"vv41:10.2": "Upapannā tidasagaṇaṃ yasassinī;",
"vv41:10.3": "Sakkassahaṃ aññatarā pajāpati,",
"vv41:10.4": "Yasuttarā nāma disāsu vissutā”ti.",
"vv41:11.1": "Nāgavimānaṃ tatiyaṃ."
}