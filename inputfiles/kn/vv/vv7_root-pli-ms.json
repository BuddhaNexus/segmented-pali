{
"vv7:1.1": "Vimānavatthu",
"vv7:2.1": "Itthivimāna",
"vv7:3.1": "Pīṭhavagga",
"vv7:4.1": "7. Dutiyanāvāvimānavatthu",
"vv7:5.1": "“Suvaṇṇacchadanaṃ nāvaṃ,",
"vv7:5.2": "Nāri āruyha tiṭṭhasi;",
"vv7:5.3": "Ogāhasi pokkharaṇiṃ,",
"vv7:5.4": "Padmaṃ chindasi pāṇinā.",
"vv7:6.1": "Kena tetādiso vaṇṇo,",
"vv7:6.2": "kena te idha mijjhati;",
"vv7:6.3": "Uppajjanti ca te bhogā,",
"vv7:6.4": "ye keci manaso piyā.",
"vv7:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv7:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv7:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv7:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv7:8.1": "Sā devatā attamanā,",
"vv7:8.2": "moggallānena pucchitā;",
"vv7:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv7:8.4": "yassa kammassidaṃ phalaṃ.",
"vv7:9.1": "“Ahaṃ manussesu manussabhūtā,",
"vv7:9.2": "Purimāya jātiyā manussaloke;",
"vv7:9.3": "Disvāna bhikkhuṃ tasitaṃ kilantaṃ,",
"vv7:9.4": "Uṭṭhāya pātuṃ udakaṃ adāsiṃ.",
"vv7:10.1": "Yo ve kilantassa pipāsitassa,",
"vv7:10.2": "Uṭṭhāya pātuṃ udakaṃ dadāti;",
"vv7:10.3": "Sītodakā tassa bhavanti najjo,",
"vv7:10.4": "Pahūtamalyā bahupuṇḍarīkā.",
"vv7:11.1": "Taṃ āpagā anupariyanti sabbadā,",
"vv7:11.2": "Sītodakā vālukasanthatā nadī;",
"vv7:11.3": "Ambā ca sālā tilakā ca jambuyo,",
"vv7:11.4": "Uddālakā pāṭaliyo ca phullā.",
"vv7:12.1": "Taṃ bhūmibhāgehi upetarūpaṃ,",
"vv7:12.2": "Vimānaseṭṭhaṃ bhusa sobhamānaṃ;",
"vv7:12.3": "Tassīdha kammassa ayaṃ vipāko,",
"vv7:12.4": "Etādisaṃ puññakatā labhanti.",
"vv7:13.1": "Tena metādiso vaṇṇo,",
"vv7:13.2": "tena me idha mijjhati;",
"vv7:13.3": "Uppajjanti ca me bhogā,",
"vv7:13.4": "ye keci manaso piyā.",
"vv7:14.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv7:14.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv7:14.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv7:14.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv7:15.1": "Dutiyanāvāvimānaṃ sattamaṃ."
}