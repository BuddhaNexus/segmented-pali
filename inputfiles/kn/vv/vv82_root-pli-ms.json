{
"vv82:1.1": "Vimānavatthu",
"vv82:2.1": "Purisavimāna",
"vv82:3.1": "Sunikkhittavagga",
"vv82:4.1": "8. Anekavaṇṇavimānavatthu",
"vv82:5.1": "“Anekavaṇṇaṃ darasokanāsanaṃ,",
"vv82:5.2": "Vimānamāruyha anekacittaṃ;",
"vv82:5.3": "Parivārito accharāsaṅgaṇena,",
"vv82:5.4": "Sunimmito bhūtapatīva modasi.",
"vv82:6.1": "Samassamo natthi kuto panuttaro,",
"vv82:6.2": "Yasena puññena ca iddhiyā ca;",
"vv82:6.3": "Sabbe ca devā tidasagaṇā samecca,",
"vv82:6.4": "Taṃ taṃ namassanti sasiṃva devā;",
"vv82:6.5": "Imā ca te accharāyo samantato,",
"vv82:6.6": "Naccanti gāyanti pamodayanti.",
"vv82:7.1": "Deviddhipattosi mahānubhāvo,",
"vv82:7.2": "Manussabhūto kimakāsi puññaṃ;",
"vv82:7.3": "Kenāsi evaṃ jalitānubhāvo,",
"vv82:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv82:8.1": "So devaputto attamano, … pe …",
"vv82:8.4": "yassa kammassidaṃ phalaṃ.",
"vv82:9.1": "“Ahaṃ bhadante ahuvāsi pubbe,",
"vv82:9.2": "Sumedhanāmassa jinassa sāvako;",
"vv82:9.3": "Puthujjano ananubodhohamasmi,",
"vv82:9.4": "So satta vassāni paribbajissahaṃ.",
"vv82:10.1": "Sohaṃ sumedhassa jinassa satthuno,",
"vv82:10.2": "Parinibbutassoghatiṇṇassa tādino;",
"vv82:10.3": "Ratanuccayaṃ hemajālena channaṃ,",
"vv82:10.4": "Vanditvā thūpasmiṃ manaṃ pasādayiṃ.",
"vv82:11.1": "Na māsi dānaṃ na ca matthi dātuṃ,",
"vv82:11.2": "Pare ca kho tattha samādapesiṃ;",
"vv82:11.3": "Pūjetha naṃ pūjanīyassa dhātuṃ,",
"vv82:11.4": "Evaṃ kira saggamito gamissatha.",
"vv82:12.1": "Tadeva kammaṃ kusalaṃ kataṃ mayā,",
"vv82:12.2": "Sukhañca dibbaṃ anubhomi attanā;",
"vv82:12.3": "Modāmahaṃ tidasagaṇassa majjhe,",
"vv82:12.4": "Na tassa puññassa khayampi ajjhagan”ti.",
"vv82:13.1": "Anekavaṇṇavimānaṃ aṭṭhamaṃ."
}