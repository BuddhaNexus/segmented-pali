{
"vv83:1.1": "Vimānavatthu",
"vv83:2.1": "Purisavimāna",
"vv83:3.1": "Sunikkhittavagga",
"vv83:4.1": "9. Maṭṭhakuṇḍalīvimānavatthu",
"vv83:5.1": "“Alaṅkato maṭṭhakuṇḍalī,",
"vv83:5.2": "Māladhārī haricandanussado;",
"vv83:5.3": "Bāhā paggayha kandasi,",
"vv83:5.4": "Vanamajjhe kiṃ dukkhito tuvan”ti.",
"vv83:6.1": "“Sovaṇṇamayo pabhassaro,",
"vv83:6.2": "Uppanno rathapañjaro mama;",
"vv83:6.3": "Tassa cakkayugaṃ na vindāmi,",
"vv83:6.4": "Tena dukkhena jahāmi jīvitan”ti.",
"vv83:7.1": "“Sovaṇṇamayaṃ maṇimayaṃ,",
"vv83:7.2": "Lohitakamayaṃ atha rūpiyamayaṃ;",
"vv83:7.3": "Ācikkha me bhaddamāṇava,",
"vv83:7.4": "Cakkayugaṃ paṭipādayāmi te”ti.",
"vv83:8.1": "So māṇavo tassa pāvadi,",
"vv83:8.2": "“Candasūriyā ubhayettha dissare;",
"vv83:8.3": "Sovaṇṇamayo ratho mama,",
"vv83:8.4": "Tena cakkayugena sobhatī”ti.",
"vv83:9.1": "“Bālo kho tvaṃ asi māṇava,",
"vv83:9.2": "Yo tvaṃ patthayase apatthiyaṃ;",
"vv83:9.3": "Maññāmi tuvaṃ marissasi,",
"vv83:9.4": "Na hi tvaṃ lacchasi candasūriye”ti.",
"vv83:10.1": "“Gamanāgamanampi dissati,",
"vv83:10.2": "Vaṇṇadhātu ubhayattha vīthiyā;",
"vv83:10.3": "Peto kālakato na dissati,",
"vv83:10.4": "Ko nidha kandataṃ bālyataro”ti.",
"vv83:11.1": "“Saccaṃ kho vadesi māṇava,",
"vv83:11.2": "Ahameva kandataṃ bālyataro;",
"vv83:11.3": "Candaṃ viya dārako rudaṃ,",
"vv83:11.4": "Petaṃ kālakatābhipatthayinti.",
"vv83:12.1": "Ādittaṃ vata maṃ santaṃ,",
"vv83:12.2": "ghatasittaṃva pāvakaṃ;",
"vv83:12.3": "Vārinā viya osiñcaṃ,",
"vv83:12.4": "sabbaṃ nibbāpaye daraṃ.",
"vv83:13.1": "Abbahī vata me sallaṃ,",
"vv83:13.2": "sokaṃ hadayanissitaṃ;",
"vv83:13.3": "Yo me sokaparetassa,",
"vv83:13.4": "puttasokaṃ apānudi.",
"vv83:14.1": "Svāhaṃ abbūḷhasallosmi,",
"vv83:14.2": "sītibhūtosmi nibbuto;",
"vv83:14.3": "Na socāmi na rodāmi,",
"vv83:14.4": "tava sutvāna māṇavā”ti.",
"vv83:15.1": "“Devatā nusi gandhabbo,",
"vv83:15.2": "adu sakko purindado;",
"vv83:15.3": "Ko vā tvaṃ kassa vā putto,",
"vv83:15.4": "kathaṃ jānemu taṃ mayan”ti.",
"vv83:16.1": "“Yañca kandasi yañca rodasi,",
"vv83:16.2": "Puttaṃ āḷāhane sayaṃ dahitvā;",
"vv83:16.3": "Svāhaṃ kusalaṃ karitvā kammaṃ,",
"vv83:16.4": "Tidasānaṃ sahabyataṃ gato”ti.",
"vv83:17.1": "“Appaṃ vā bahuṃ vā nāddasāma,",
"vv83:17.2": "Dānaṃ dadantassa sake agāre;",
"vv83:17.3": "Uposathakammaṃ vā tādisaṃ,",
"vv83:17.4": "Kena kammena gatosi devalokan”ti.",
"vv83:18.1": "“Ābādhikohaṃ dukkhito gilāno,",
"vv83:18.2": "Āturarūpomhi sake nivesane;",
"vv83:18.3": "Buddhaṃ vigatarajaṃ vitiṇṇakaṅkhaṃ,",
"vv83:18.4": "Addakkhiṃ sugataṃ anomapaññaṃ.",
"vv83:19.1": "Svāhaṃ muditamano pasannacitto,",
"vv83:19.2": "Añjaliṃ akariṃ tathāgatassa;",
"vv83:19.3": "Tāhaṃ kusalaṃ karitvāna kammaṃ,",
"vv83:19.4": "Tidasānaṃ sahabyataṃ gato”ti.",
"vv83:20.1": "“Acchariyaṃ vata abbhutaṃ vata,",
"vv83:20.2": "Añjalikammassa ayamīdiso vipāko;",
"vv83:20.3": "Ahampi muditamano pasannacitto,",
"vv83:20.4": "Ajjeva buddhaṃ saraṇaṃ vajāmī”ti.",
"vv83:21.1": "“Ajjeva buddhaṃ saraṇaṃ vajāhi,",
"vv83:21.2": "Dhammañca saṃghañca pasannacitto;",
"vv83:21.3": "Tatheva sikkhāya padāni pañca,",
"vv83:21.4": "Akhaṇḍaphullāni samādiyassu.",
"vv83:22.1": "Pāṇātipātā viramassu khippaṃ,",
"vv83:22.2": "Loke adinnaṃ parivajjayassu;",
"vv83:22.3": "Amajjapo mā ca musā bhaṇāhi,",
"vv83:22.4": "Sakena dārena ca hohi tuṭṭho”ti.",
"vv83:23.1": "“Atthakāmosi me yakkha,",
"vv83:23.2": "hitakāmosi devate;",
"vv83:23.3": "Karomi tuyhaṃ vacanaṃ,",
"vv83:23.4": "tvaṃsi ācariyo mamāti.",
"vv83:24.1": "Upemi saraṇaṃ buddhaṃ,",
"vv83:24.2": "dhammañcāpi anuttaraṃ;",
"vv83:24.3": "Saṃghañca naradevassa,",
"vv83:24.4": "gacchāmi saraṇaṃ ahaṃ.",
"vv83:25.1": "Pāṇātipātā viramāmi khippaṃ,",
"vv83:25.2": "Loke adinnaṃ parivajjayāmi;",
"vv83:25.3": "Amajjapo no ca musā bhaṇāmi,",
"vv83:25.4": "Sakena dārena ca homi tuṭṭho”ti.",
"vv83:26.1": "Maṭṭhakuṇḍalīvimānaṃ navamaṃ."
}