{
"vv78:1.1": "Vimānavatthu",
"vv78:2.1": "Purisavimāna",
"vv78:3.1": "Sunikkhittavagga",
"vv78:4.1": "4. Suvaṇṇavimānavatthu",
"vv78:5.1": "“Sovaṇṇamaye pabbatasmiṃ,",
"vv78:5.2": "vimānaṃ sabbatopabhaṃ;",
"vv78:5.3": "Hemajālapaṭicchannaṃ,",
"vv78:5.4": "kiṅkiṇijālakappitaṃ.",
"vv78:6.1": "Aṭṭhaṃsā sukatā thambhā,",
"vv78:6.2": "sabbe veḷuriyāmayā;",
"vv78:6.3": "Ekamekāya aṃsiyā,",
"vv78:6.4": "ratanā satta nimmitā.",
"vv78:7.1": "Veḷuriyasuvaṇṇassa,",
"vv78:7.2": "phalikā rūpiyassa ca;",
"vv78:7.3": "Masāragallamuttāhi,",
"vv78:7.4": "lohitaṅgamaṇīhi ca.",
"vv78:8.1": "Citrā manoramā bhūmi,",
"vv78:8.2": "na tatthuddhaṃsatī rajo;",
"vv78:8.3": "Gopānasīgaṇā pītā,",
"vv78:8.4": "kūṭaṃ dhārenti nimmitā.",
"vv78:9.1": "Sopānāni ca cattāri,",
"vv78:9.2": "nimmitā caturo disā;",
"vv78:9.3": "Nānāratanagabbhehi,",
"vv78:9.4": "ādiccova virocati.",
"vv78:10.1": "Vediyā catasso tattha,",
"vv78:10.2": "vibhattā bhāgaso mitā;",
"vv78:10.3": "Daddallamānā ābhanti,",
"vv78:10.4": "samantā caturo disā.",
"vv78:11.1": "Tasmiṃ vimāne pavare,",
"vv78:11.2": "devaputto mahappabho;",
"vv78:11.3": "Atirocasi vaṇṇena,",
"vv78:11.4": "udayantova bhāṇumā.",
"vv78:12.1": "Dānassa te idaṃ phalaṃ,",
"vv78:12.2": "atho sīlassa vā pana;",
"vv78:12.3": "Atho añjalikammassa,",
"vv78:12.4": "taṃ me akkhāhi pucchito”.",
"vv78:13.1": "So devaputto attamano, … pe …",
"vv78:13.4": "yassa kammassidaṃ phalaṃ.",
"vv78:14.1": "“Ahaṃ andhakavindasmiṃ,",
"vv78:14.2": "buddhassādiccabandhuno;",
"vv78:14.3": "Vihāraṃ satthu kāresiṃ,",
"vv78:14.4": "pasanno sehi pāṇibhi.",
"vv78:15.1": "Tattha gandhañca mālañca,",
"vv78:15.2": "paccayañca vilepanaṃ;",
"vv78:15.3": "Vihāraṃ satthu adāsiṃ,",
"vv78:15.4": "vippasannena cetasā;",
"vv78:15.5": "Tena mayhaṃ idaṃ laddhaṃ,",
"vv78:15.6": "vasaṃ vattemi nandane.",
"vv78:16.1": "Nandane ca vane ramme,",
"vv78:16.2": "nānādijagaṇāyute;",
"vv78:16.3": "Ramāmi naccagītehi,",
"vv78:16.4": "accharāhi purakkhato”ti.",
"vv78:17.1": "Suvaṇṇavimānaṃ catutthaṃ."
}