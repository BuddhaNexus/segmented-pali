{
"vv18:1.1": "Vimānavatthu",
"vv18:2.1": "Itthivimāna",
"vv18:3.1": "Cittalatāvagga",
"vv18:4.1": "1. Dāsivimānavatthu",
"vv18:5.1": "“Api sakkova devindo,",
"vv18:5.2": "ramme cittalatāvane;",
"vv18:5.3": "Samantā anupariyāsi,",
"vv18:5.4": "nārīgaṇapurakkhatā;",
"vv18:5.5": "Obhāsentī disā sabbā,",
"vv18:5.6": "osadhī viya tārakā.",
"vv18:6.1": "Kena tetādiso vaṇṇo,",
"vv18:6.2": "kena te idha mijjhati;",
"vv18:6.3": "Uppajjanti ca te bhogā,",
"vv18:6.4": "ye keci manaso piyā.",
"vv18:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv18:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv18:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv18:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv18:8.1": "Sā devatā attamanā,",
"vv18:8.2": "moggallānena pucchitā;",
"vv18:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv18:8.4": "yassa kammassidaṃ phalaṃ.",
"vv18:9.1": "“Ahaṃ manussesu manussabhūtā,",
"vv18:9.2": "Dāsī ahosiṃ parapessiyā kule.",
"vv18:10.1": "Upāsikā cakkhumato,",
"vv18:10.2": "gotamassa yasassino;",
"vv18:10.3": "Tassā me nikkamo āsi,",
"vv18:10.4": "sāsane tassa tādino.",
"vv18:11.1": "Kāmaṃ bhijjatuyaṃ kāyo,",
"vv18:11.2": "neva atthettha saṇṭhanaṃ;",
"vv18:11.3": "Sikkhāpadānaṃ pañcannaṃ,",
"vv18:11.4": "maggo sovatthiko sivo.",
"vv18:12.1": "Akaṇṭako agahano,",
"vv18:12.2": "uju sabbhi pavedito;",
"vv18:12.3": "Nikkamassa phalaṃ passa,",
"vv18:12.4": "yathidaṃ pāpuṇitthikā.",
"vv18:13.1": "Āmantanikā raññomhi,",
"vv18:13.2": "sakkassa vasavattino;",
"vv18:13.3": "Saṭṭhi tūriyasahassāni,",
"vv18:13.4": "paṭibodhaṃ karonti me.",
"vv18:14.1": "Ālambo gaggaro bhīmo,",
"vv18:14.2": "sādhuvādī ca saṃsayo;",
"vv18:14.3": "Pokkharo ca suphasso ca,",
"vv18:14.4": "viṇāmokkhā ca nāriyo.",
"vv18:15.1": "Nandā ceva sunandā ca,",
"vv18:15.2": "soṇadinnā sucimhitā;",
"vv18:15.3": "Alambusā missakesī ca,",
"vv18:15.4": "puṇḍarīkāti dāruṇī.",
"vv18:16.1": "Eṇīphassā suphassā ca,",
"vv18:16.2": "subhaddā muduvādinī;",
"vv18:16.3": "Etā caññā ca seyyāse,",
"vv18:16.4": "accharānaṃ pabodhikā.",
"vv18:17.1": "Tā maṃ kālenupāgantvā,",
"vv18:17.2": "abhibhāsanti devatā;",
"vv18:17.3": "Handa naccāma gāyāma,",
"vv18:17.4": "handa taṃ ramayāmase.",
"vv18:18.1": "Nayidaṃ akatapuññānaṃ,",
"vv18:18.2": "katapuññānamevidaṃ;",
"vv18:18.3": "Asokaṃ nandanaṃ rammaṃ,",
"vv18:18.4": "tidasānaṃ mahāvanaṃ.",
"vv18:19.1": "Sukhaṃ akatapuññānaṃ,",
"vv18:19.2": "idha natthi parattha ca;",
"vv18:19.3": "Sukhañca katapuññānaṃ,",
"vv18:19.4": "idha ceva parattha ca.",
"vv18:20.1": "Tesaṃ sahabyakāmānaṃ,",
"vv18:20.2": "kattabbaṃ kusalaṃ bahuṃ;",
"vv18:20.3": "Katapuññā hi modanti,",
"vv18:20.4": "sagge bhogasamaṅgino”ti.",
"vv18:21.1": "Dāsivimānaṃ paṭhamaṃ."
}