{
"vv2:1.1": "Vimānavatthu",
"vv2:2.1": "Itthivimāna",
"vv2:3.1": "Pīṭhavagga",
"vv2:4.1": "2. Dutiyapīṭhavimānavatthu",
"vv2:5.1": "“Pīṭhaṃ te veḷuriyamayaṃ uḷāraṃ,",
"vv2:5.2": "Manojavaṃ gacchati yenakāmaṃ;",
"vv2:5.3": "Alaṅkate malyadhare suvatthe,",
"vv2:5.4": "Obhāsasi vijjurivabbhakūṭaṃ.",
"vv2:6.1": "Kena tetādiso vaṇṇo,",
"vv2:6.2": "kena te idha mijjhati;",
"vv2:6.3": "Uppajjanti ca te bhogā,",
"vv2:6.4": "ye keci manaso piyā.",
"vv2:7.1": "Pucchāmi taṃ devi mahānubhāve,",
"vv2:7.2": "Manussabhūtā kimakāsi puññaṃ;",
"vv2:7.3": "Kenāsi evaṃ jalitānubhāvā,",
"vv2:7.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"vv2:8.1": "Sā devatā attamanā,",
"vv2:8.2": "moggallānena pucchitā;",
"vv2:8.3": "Pañhaṃ puṭṭhā viyākāsi,",
"vv2:8.4": "yassa kammassidaṃ phalaṃ.",
"vv2:9.1": "“Ahaṃ manussesu manussabhūtā,",
"vv2:9.2": "Abbhāgatānāsanakaṃ adāsiṃ;",
"vv2:9.3": "Abhivādayiṃ añjalikaṃ akāsiṃ,",
"vv2:9.4": "Yathānubhāvañca adāsi dānaṃ.",
"vv2:10.1": "Tena metādiso vaṇṇo,",
"vv2:10.2": "tena me idha mijjhati;",
"vv2:10.3": "Uppajjanti ca me bhogā,",
"vv2:10.4": "ye keci manaso piyā.",
"vv2:11.1": "Akkhāmi te bhikkhu mahānubhāva,",
"vv2:11.2": "Manussabhūtā yamakāsi puññaṃ;",
"vv2:11.3": "Tenamhi evaṃ jalitānubhāvā,",
"vv2:11.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
"vv2:12.1": "Dutiyapīṭhavimānaṃ dutiyaṃ."
}