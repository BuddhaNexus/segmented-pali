{
"vv44:1.1": "Vimānavatthu",
"vv44:2.1": "Itthivimāna",
"vv44:3.1": "Mañjiṭṭhakavagga",
"vv44:4.1": "6. Vihāravimānavatthu",
"vv44:5.1": "“Abhikkantena vaṇṇena, … pe …",
"vv44:5.4": "osadhī viya tārakā.",
"vv44:6.1": "Tassā te naccamānāya,",
"vv44:6.2": "aṅgamaṅgehi sabbaso;",
"vv44:6.3": "Dibbā saddā niccharanti,",
"vv44:6.4": "savanīyā manoramā.",
"vv44:7.1": "Tassā te naccamānāya,",
"vv44:7.2": "aṅgamaṅgehi sabbaso;",
"vv44:7.3": "Dibbā gandhā pavāyanti,",
"vv44:7.4": "sucigandhā manoramā.",
"vv44:8.1": "Vivattamānā kāyena,",
"vv44:8.2": "yā veṇīsu piḷandhanā;",
"vv44:8.3": "Tesaṃ suyyati nigghoso,",
"vv44:8.4": "tūriye pañcaṅgike yathā.",
"vv44:9.1": "Vaṭaṃsakā vātadhutā,",
"vv44:9.2": "vātena sampakampitā;",
"vv44:9.3": "Tesaṃ suyyati nigghoso,",
"vv44:9.4": "tūriye pañcaṅgike yathā.",
"vv44:10.1": "Yāpi te sirasmiṃ mālā,",
"vv44:10.2": "sucigandhā manoramā;",
"vv44:10.3": "Vāti gandho disā sabbā,",
"vv44:10.4": "rukkho mañjūsako yathā.",
"vv44:11.1": "Ghāyase taṃ sucigandhaṃ,",
"vv44:11.2": "rūpaṃ passasi amānusaṃ;",
"vv44:11.3": "Devate pucchitācikkha,",
"vv44:11.4": "kissa kammassidaṃ phalan”ti.",
"vv44:12.1": "“Sāvatthiyaṃ mayhaṃ sakhī bhadante,",
"vv44:12.2": "Saṃghassa kāresi mahāvihāraṃ;",
"vv44:12.3": "Tatthappasannā ahamānumodiṃ,",
"vv44:12.4": "Disvā agārañca piyañca metaṃ.",
"vv44:13.1": "Tāyeva me suddhanumodanāya,",
"vv44:13.2": "Laddhaṃ vimānabbhutadassaneyyaṃ;",
"vv44:13.3": "Samantato soḷasayojanāni,",
"vv44:13.4": "Vehāyasaṃ gacchati iddhiyā mama.",
"vv44:14.1": "Kūṭāgārā nivesā me,",
"vv44:14.2": "vibhattā bhāgaso mitā;",
"vv44:14.3": "Daddallamānā ābhanti,",
"vv44:14.4": "samantā satayojanaṃ.",
"vv44:15.1": "Pokkharañño ca me ettha,",
"vv44:15.2": "puthulomanisevitā;",
"vv44:15.3": "Acchodakā vippasannā,",
"vv44:15.4": "soṇṇavālukasanthatā.",
"vv44:16.1": "Nānāpadumasañchannā,",
"vv44:16.2": "puṇḍarīkasamotatā;",
"vv44:16.3": "Surabhī sampavāyanti,",
"vv44:16.4": "manuññā māluteritā.",
"vv44:17.1": "Jambuyo panasā tālā,",
"vv44:17.2": "nāḷikeravanāni ca;",
"vv44:17.3": "Antonivesane jātā,",
"vv44:17.4": "nānārukkhā aropimā.",
"vv44:18.1": "Nānātūriyasaṅghuṭṭhaṃ,",
"vv44:18.2": "accharāgaṇaghositaṃ;",
"vv44:18.3": "Yopi maṃ supine passe,",
"vv44:18.4": "sopi vitto siyā naro.",
"vv44:19.1": "Etādisaṃ abbhutadassaneyyaṃ,",
"vv44:19.2": "Vimānaṃ sabbasopabhaṃ;",
"vv44:19.3": "Mama kammehi nibbattaṃ,",
"vv44:19.4": "Alaṃ puññāni kātave”ti.",
"vv44:20.1": "“Tāyeva te suddhanumodanāya,",
"vv44:20.2": "Laddhaṃ vimānabbhutadassaneyyaṃ;",
"vv44:20.3": "Yā ceva sā dānamadāsi nārī,",
"vv44:20.4": "Tassā gatiṃ brūhi kuhiṃ uppannā sā”ti.",
"vv44:21.1": "“Yā sā ahu mayhaṃ sakhī bhadante,",
"vv44:21.2": "Saṃghassa kāresi mahāvihāraṃ;",
"vv44:21.3": "Viññātadhammā sā adāsi dānaṃ,",
"vv44:21.4": "Uppannā nimmānaratīsu devesu.",
"vv44:22.1": "Pajāpatī tassa sunimmitassa,",
"vv44:22.2": "Acintiyā kammavipākā tassā;",
"vv44:22.3": "Yametaṃ pucchasi kuhiṃ uppannā sāti,",
"vv44:22.4": "Taṃ te viyākāsiṃ anaññathā ahaṃ.",
"vv44:23.1": "Tenahaññepi samādapetha,",
"vv44:23.2": "Saṃghassa dānāni dadātha vittā;",
"vv44:23.3": "Dhammañca suṇātha pasannamānasā,",
"vv44:23.4": "Sudullabho laddho manussalābho.",
"vv44:24.1": "Yaṃ maggaṃ maggādhipatī adesayi,",
"vv44:24.2": "Brahmassaro kañcanasannibhattaco;",
"vv44:24.3": "Saṃghassa dānāni dadātha vittā,",
"vv44:24.4": "Mahapphalā yattha bhavanti dakkhiṇā.",
"vv44:25.1": "Ye puggalā aṭṭha sataṃ pasatthā,",
"vv44:25.2": "Cattāri etāni yugāni honti;",
"vv44:25.3": "Te dakkhiṇeyyā sugatassa sāvakā,",
"vv44:25.4": "Etesu dinnāni mahapphalāni.",
"vv44:26.1": "Cattāro ca paṭipannā,",
"vv44:26.2": "cattāro ca phale ṭhitā;",
"vv44:26.3": "Esa saṃgho ujubhūto,",
"vv44:26.4": "paññāsīlasamāhito.",
"vv44:27.1": "Yajamānānaṃ manussānaṃ,",
"vv44:27.2": "puññapekkhāna pāṇinaṃ;",
"vv44:27.3": "Karotaṃ opadhikaṃ puññaṃ,",
"vv44:27.4": "saṃghe dinnaṃ mahapphalaṃ.",
"vv44:28.1": "Eso hi saṃgho vipulo mahaggato,",
"vv44:28.2": "Esappameyyo udadhīva sāgaro;",
"vv44:28.3": "Etehi seṭṭhā naravīrasāvakā,",
"vv44:28.4": "Pabhaṅkarā dhammamudīrayanti.",
"vv44:29.1": "Tesaṃ sudinnaṃ suhutaṃ suyiṭṭhaṃ,",
"vv44:29.2": "Ye saṃghamuddissa dadanti dānaṃ;",
"vv44:29.3": "Sā dakkhiṇā saṃghagatā patiṭṭhitā,",
"vv44:29.4": "Mahapphalā lokavidūna vaṇṇitā.",
"vv44:30.1": "Etādisaṃ yaññamanussarantā,",
"vv44:30.2": "Ye vedajātā vicaranti loke;",
"vv44:30.3": "Vineyya maccheramalaṃ samūlaṃ,",
"vv44:30.4": "Aninditā saggamupenti ṭhānan”ti.",
"vv44:31.1": "Vihāravimānaṃ chaṭṭhaṃ.",
"vv44:31.2": "Bhāṇavāraṃ dutiyaṃ."
}