{
"vv39:1.1": "Vimānavatthu",
"vv39:2.1": "Itthivimāna",
"vv39:3.1": "Mañjiṭṭhakavagga",
"vv39:4.1": "1. Mañjiṭṭhakavimānavatthu",
"vv39:5.1": "“Mañjiṭṭhake vimānasmiṃ,",
"vv39:5.2": "soṇṇavālukasanthate;",
"vv39:5.3": "Pañcaṅgikena tūriyena,",
"vv39:5.4": "ramasi suppavādite.",
"vv39:6.1": "Tamhā vimānā oruyha,",
"vv39:6.2": "nimmitā ratanāmayā;",
"vv39:6.3": "Ogāhasi sālavanaṃ,",
"vv39:6.4": "pupphitaṃ sabbakālikaṃ.",
"vv39:7.1": "Yassa yasseva sālassa,",
"vv39:7.2": "mūle tiṭṭhasi devate;",
"vv39:7.3": "So so muñcati pupphāni,",
"vv39:7.4": "onamitvā dumuttamo.",
"vv39:8.1": "Vāteritaṃ sālavanaṃ,",
"vv39:8.2": "ādhutaṃ dijasevitaṃ;",
"vv39:8.3": "Vāti gandho disā sabbā,",
"vv39:8.4": "rukkho mañjūsako yathā.",
"vv39:9.1": "Ghāyase taṃ sucigandhaṃ,",
"vv39:9.2": "rūpaṃ passasi amānusaṃ;",
"vv39:9.3": "Devate pucchitācikkha,",
"vv39:9.4": "kissa kammassidaṃ phalan”ti.",
"vv39:10.1": "“Ahaṃ manussesu manussabhūtā,",
"vv39:10.2": "Dāsī ayirakule ahuṃ;",
"vv39:10.3": "Buddhaṃ nisinnaṃ disvāna,",
"vv39:10.4": "Sālapupphehi okiriṃ.",
"vv39:11.1": "Vaṭaṃsakañca sukataṃ,",
"vv39:11.2": "sālapupphamayaṃ ahaṃ;",
"vv39:11.3": "Buddhassa upanāmesiṃ,",
"vv39:11.4": "pasannā sehi pāṇibhi.",
"vv39:12.1": "Tāhaṃ kammaṃ karitvāna,",
"vv39:12.2": "kusalaṃ buddhavaṇṇitaṃ;",
"vv39:12.3": "Apetasokā sukhitā,",
"vv39:12.4": "sampamodāmanāmayā”ti.",
"vv39:13.1": "Mañjiṭṭhakavimānaṃ paṭhamaṃ."
}