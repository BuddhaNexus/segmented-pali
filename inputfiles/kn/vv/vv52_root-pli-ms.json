{
"vv52:1.1": "Vimānavatthu",
"vv52:2.1": "Purisavimāna",
"vv52:3.1": "Mahārathavagga",
"vv52:4.1": "2. Revatīvimānavatthu",
"vv52:5.1": "“Cirappavāsiṃ purisaṃ,",
"vv52:5.2": "dūrato sotthimāgataṃ;",
"vv52:5.3": "Ñātimittā suhajjā ca,",
"vv52:5.4": "abhinandanti āgataṃ.",
"vv52:6.1": "Tatheva katapuññampi,",
"vv52:6.2": "asmā lokā paraṃ gataṃ;",
"vv52:6.3": "Puññāni paṭigaṇhanti,",
"vv52:6.4": "piyaṃ ñātīva āgataṃ”.",
"vv52:7.1": "“Uṭṭhehi revate supāpadhamme,",
"vv52:7.2": "Apārutadvāre adānasīle;",
"vv52:7.3": "Nessāma taṃ yattha thunanti duggatā,",
"vv52:7.4": "Samappitā nerayikā dukkhenā”ti.",
"vv52:8.1": "Icceva vatvāna yamassa dūtā,",
"vv52:8.2": "Te dve yakkhā lohitakkhā brahantā;",
"vv52:8.3": "Paccekabāhāsu gahetvā revataṃ,",
"vv52:8.4": "Pakkāmayuṃ devagaṇassa santike.",
"vv52:9.1": "“Ādiccavaṇṇaṃ ruciraṃ pabhassaraṃ,",
"vv52:9.2": "Byamhaṃ subhaṃ kañcanajālachannaṃ;",
"vv52:9.3": "Kassetamākiṇṇajanaṃ vimānaṃ,",
"vv52:9.4": "Suriyassa raṃsīriva jotamānaṃ.",
"vv52:10.1": "Nārīgaṇā candanasāralittā,",
"vv52:10.2": "Ubhato vimānaṃ upasobhayanti;",
"vv52:10.3": "Taṃ dissati suriyasamānavaṇṇaṃ,",
"vv52:10.4": "Ko modati saggapatto vimāne”ti.",
"vv52:11.1": "“Bārāṇasiyaṃ nandiyo nāmāsi,",
"vv52:11.2": "Upāsako amaccharī dānapati vadaññū;",
"vv52:11.3": "Tassetamākiṇṇajanaṃ vimānaṃ,",
"vv52:11.4": "Suriyassa raṃsīriva jotamānaṃ.",
"vv52:12.1": "Nārīgaṇā candanasāralittā,",
"vv52:12.2": "Ubhato vimānaṃ upasobhayanti;",
"vv52:12.3": "Taṃ dissati suriyasamānavaṇṇaṃ,",
"vv52:12.4": "So modati saggapatto vimāne”ti.",
"vv52:13.1": "“Nandiyassāhaṃ bhariyā,",
"vv52:13.2": "Agārinī sabbakulassa issarā;",
"vv52:13.3": "Bhattu vimāne ramissāmi dānahaṃ,",
"vv52:13.4": "Na patthaye nirayaṃ dassanāyā”ti.",
"vv52:14.1": "“Eso te nirayo supāpadhamme,",
"vv52:14.2": "Puññaṃ tayā akataṃ jīvaloke;",
"vv52:14.3": "Na hi maccharī rosako pāpadhammo,",
"vv52:14.4": "Saggūpagānaṃ labhati sahabyatan”ti.",
"vv52:15.1": "“Kiṃ nu gūthañca muttañca,",
"vv52:15.2": "asucī paṭidissati;",
"vv52:15.3": "Duggandhaṃ kimidaṃ mīḷhaṃ,",
"vv52:15.4": "kimetaṃ upavāyatī”ti.",
"vv52:16.1": "“Esa saṃsavako nāma,",
"vv52:16.2": "gambhīro sataporiso;",
"vv52:16.3": "Yattha vassasahassāni,",
"vv52:16.4": "tuvaṃ paccasi revate”ti.",
"vv52:17.1": "“Kiṃ nu kāyena vācāya,",
"vv52:17.2": "manasā dukkaṭaṃ kataṃ;",
"vv52:17.3": "Kena saṃsavako laddho,",
"vv52:17.4": "gambhīro sataporiso”ti.",
"vv52:18.1": "“Samaṇe brāhmaṇe cāpi,",
"vv52:18.2": "aññe vāpi vanibbake;",
"vv52:18.3": "Musāvādena vañcesi,",
"vv52:18.4": "taṃ pāpaṃ pakataṃ tayā.",
"vv52:19.1": "Tena saṃsavako laddho,",
"vv52:19.2": "gambhīro sataporiso;",
"vv52:19.3": "Tattha vassasahassāni,",
"vv52:19.4": "tuvaṃ paccasi revate.",
"vv52:20.1": "Hatthepi chindanti athopi pāde,",
"vv52:20.2": "Kaṇṇepi chindanti athopi nāsaṃ;",
"vv52:20.3": "Athopi kākoḷagaṇā samecca,",
"vv52:20.4": "Saṅgamma khādanti viphandamānan”ti.",
"vv52:21.1": "“Sādhu kho maṃ paṭinetha,",
"vv52:21.2": "kāhāmi kusalaṃ bahuṃ;",
"vv52:21.3": "Dānena samacariyāya,",
"vv52:21.4": "saṃyamena damena ca;",
"vv52:21.5": "Yaṃ katvā sukhitā honti,",
"vv52:21.6": "na ca pacchānutappare”ti.",
"vv52:22.1": "“Pure tuvaṃ pamajjitvā,",
"vv52:22.2": "idāni paridevasi;",
"vv52:22.3": "Sayaṃ katānaṃ kammānaṃ,",
"vv52:22.4": "vipākaṃ anubhossasī”ti.",
"vv52:23.1": "“Ko devalokato manussalokaṃ,",
"vv52:23.2": "Gantvāna puṭṭho me evaṃ vadeyya;",
"vv52:23.3": "‘Nikkhittadaṇḍesu dadātha dānaṃ,",
"vv52:23.4": "Acchādanaṃ seyyamathannapānaṃ;",
"vv52:23.5": "Na hi maccharī rosako pāpadhammo,",
"vv52:23.6": "Saggūpagānaṃ labhati sahabyataṃ’.",
"vv52:24.1": "Sāhaṃ nūna ito gantvā,",
"vv52:24.2": "yoniṃ laddhāna mānusiṃ;",
"vv52:24.3": "Vadaññū sīlasampannā,",
"vv52:24.4": "kāhāmi kusalaṃ bahuṃ;",
"vv52:24.5": "Dānena samacariyāya,",
"vv52:24.6": "saṃyamena damena ca.",
"vv52:25.1": "Ārāmāni ca ropissaṃ,",
"vv52:25.2": "dugge saṅkamanāni ca;",
"vv52:25.3": "Papañca udapānañca,",
"vv52:25.4": "vippasannena cetasā.",
"vv52:26.1": "Cātuddasiṃ pañcadasiṃ,",
"vv52:26.2": "yā ca pakkhassa aṭṭhamī;",
"vv52:26.3": "Pāṭihāriyapakkhañca,",
"vv52:26.4": "aṭṭhaṅgasusamāgataṃ.",
"vv52:27.1": "Uposathaṃ upavasissaṃ,",
"vv52:27.2": "sadā sīlesu saṃvutā;",
"vv52:27.3": "Na ca dāne pamajjissaṃ,",
"vv52:27.4": "sāmaṃ diṭṭhamidaṃ mayā”ti.",
"vv52:28.1": "Iccevaṃ vippalapantiṃ,",
"vv52:28.2": "phandamānaṃ tato tato;",
"vv52:28.3": "Khipiṃsu niraye ghore,",
"vv52:28.4": "uddhampādaṃ avaṃsiraṃ.",
"vv52:29.1": "“Ahaṃ pure maccharinī ahosiṃ,",
"vv52:29.2": "Paribhāsikā samaṇabrāhmaṇānaṃ;",
"vv52:29.3": "Vitathena ca sāmikaṃ vañcayitvā,",
"vv52:29.4": "Paccāmahaṃ niraye ghorarūpe”ti.",
"vv52:30.1": "Revatīvimānaṃ dutiyaṃ."
}