{
"vv16:1.1": "Vimānavatthu",
"vv16:2.1": "Itthivimāna",
"vv16:3.1": "Pīṭhavagga",
"vv16:4.1": "16. Sirimāvimānavatthu",
"vv16:5.1": "“Yuttā ca te paramaalaṅkatā hayā,",
"vv16:5.2": "Adhomukhā aghasigamā balī javā;",
"vv16:5.3": "Abhinimmitā pañcarathāsatā ca te,",
"vv16:5.4": "Anventi taṃ sārathicoditā hayā.",
"vv16:6.1": "Sā tiṭṭhasi rathavare alaṅkatā,",
"vv16:6.2": "Obhāsayaṃ jalamiva joti pāvako;",
"vv16:6.3": "Pucchāmi taṃ varatanu anomadassane,",
"vv16:6.4": "Kasmā nu kāyā anadhivaraṃ upāgami”.",
"vv16:7.1": "“Kāmaggapattānaṃ yamāhunuttaraṃ,",
"vv16:7.2": "Nimmāya nimmāya ramanti devatā;",
"vv16:7.3": "Tasmā kāyā accharā kāmavaṇṇinī,",
"vv16:7.4": "Idhāgatā anadhivaraṃ namassituṃ”.",
"vv16:8.1": "“Kiṃ tvaṃ pure sucaritamācarīdha,",
"vv16:8.2": "Kenacchasi tvaṃ amitayasā sukhedhitā;",
"vv16:8.3": "Iddhī ca te anadhivarā vihaṅgamā,",
"vv16:8.4": "Vaṇṇo ca te dasa disā virocati.",
"vv16:9.1": "Devehi tvaṃ parivutā sakkatā casi,",
"vv16:9.2": "Kuto cutā sugatigatāsi devate;",
"vv16:9.3": "Kassa vā tvaṃ vacanakarānusāsaniṃ,",
"vv16:9.4": "Ācikkha me tvaṃ yadi buddhasāvikā”ti.",
"vv16:10.1": "“Nagantare nagaravare sumāpite,",
"vv16:10.2": "Paricārikā rājavarassa sirimato;",
"vv16:10.3": "Nacce gīte paramasusikkhitā ahuṃ,",
"vv16:10.4": "Sirimāti maṃ rājagahe avediṃsu.",
"vv16:11.1": "Buddho ca me isinisabho vināyako,",
"vv16:11.2": "Adesayī samudayadukkhaniccataṃ;",
"vv16:11.3": "Asaṅkhataṃ dukkhanirodhasassataṃ,",
"vv16:11.4": "Maggañcimaṃ akuṭilamañjasaṃ sivaṃ.",
"vv16:12.1": "Sutvānahaṃ amatapadaṃ asaṅkhataṃ,",
"vv16:12.2": "Tathāgatassanadhivarassa sāsanaṃ;",
"vv16:12.3": "Sīlesvahaṃ paramasusaṃvutā ahuṃ,",
"vv16:12.4": "Dhamme ṭhitā naravarabuddhadesite.",
"vv16:13.1": "Ñatvānahaṃ virajapadaṃ asaṅkhataṃ,",
"vv16:13.2": "Tathāgatenanadhivarena desitaṃ;",
"vv16:13.3": "Tatthevahaṃ samathasamādhimāphusiṃ,",
"vv16:13.4": "Sāyeva me paramaniyāmatā ahu.",
"vv16:14.1": "Laddhānahaṃ amatavaraṃ visesanaṃ,",
"vv16:14.2": "Ekaṃsikā abhisamaye visesiya;",
"vv16:14.3": "Asaṃsayā bahujanapūjitā ahaṃ,",
"vv16:14.4": "Khiḍḍāratiṃ paccanubhomanappakaṃ.",
"vv16:15.1": "Evaṃ ahaṃ amatadasamhi devatā,",
"vv16:15.2": "Tathāgatassanadhivarassa sāvikā;",
"vv16:15.3": "Dhammaddasā paṭhamaphale patiṭṭhitā,",
"vv16:15.4": "Sotāpannā na ca pana matthi duggati.",
"vv16:16.1": "Sā vandituṃ anadhivaraṃ upāgamiṃ,",
"vv16:16.2": "Pāsādike kusalarate ca bhikkhavo;",
"vv16:16.3": "Namassituṃ samaṇasamāgamaṃ sivaṃ,",
"vv16:16.4": "Sagāravā sirimato dhammarājino.",
"vv16:17.1": "Disvā muniṃ muditamanamhi pīṇitā,",
"vv16:17.2": "Tathāgataṃ naravaradammasārathiṃ;",
"vv16:17.3": "Taṇhacchidaṃ kusalarataṃ vināyakaṃ,",
"vv16:17.4": "Vandāmahaṃ paramahitānukampakan”ti.",
"vv16:18.1": "Sirimāvimānaṃ soḷasamaṃ."
}