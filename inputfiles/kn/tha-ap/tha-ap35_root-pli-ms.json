{
"tha-ap35:1.1": "Therāpadāna",
"tha-ap35:2.1": "Kuṇḍadhānavagga",
"tha-ap35:3.1": "3 Mahākaccānattheraapadāna",
"tha-ap35:4.1": "“Padumuttaranāthassa,",
"tha-ap35:4.2": "padumaṃ nāma cetiyaṃ;",
"tha-ap35:4.3": "Silāsanaṃ kārayitvā,",
"tha-ap35:4.4": "suvaṇṇenābhilepayiṃ.",
"tha-ap35:5.1": "Ratanāmayachattañca,",
"tha-ap35:5.2": "paggayha vāḷabījaniṃ;",
"tha-ap35:5.3": "Buddhassa abhiropesiṃ,",
"tha-ap35:5.4": "lokabandhussa tādino.",
"tha-ap35:6.1": "Yāvatā devatā bhummā,",
"tha-ap35:6.2": "sabbe sannipatuṃ tadā;",
"tha-ap35:6.3": "Ratanāmayachattānaṃ,",
"tha-ap35:6.4": "vipākaṃ kathayissati.",
"tha-ap35:7.1": "Tañca sabbaṃ suṇissāma,",
"tha-ap35:7.2": "kathayantassa satthuno;",
"tha-ap35:7.3": "Bhiyyo hāsaṃ janeyyāma,",
"tha-ap35:7.4": "sammāsambuddhasāsane.",
"tha-ap35:8.1": "Hemāsane nisīditvā,",
"tha-ap35:8.2": "sayambhū aggapuggalo;",
"tha-ap35:8.3": "Bhikkhusaṃghaparibyūḷho,",
"tha-ap35:8.4": "imā gāthā abhāsatha.",
"tha-ap35:9.1": "‘Yenidaṃ āsanaṃ dinnaṃ,",
"tha-ap35:9.2": "sovaṇṇaṃ ratanāmayaṃ;",
"tha-ap35:9.3": "Tamahaṃ kittayissāmi,",
"tha-ap35:9.4": "suṇātha mama bhāsato.",
"tha-ap35:10.1": "Tiṃsa kappāni devindo,",
"tha-ap35:10.2": "devarajjaṃ karissati;",
"tha-ap35:10.3": "Samantā yojanasataṃ,",
"tha-ap35:10.4": "ābhāyābhibhavissati.",
"tha-ap35:11.1": "Manussalokamāgantvā,",
"tha-ap35:11.2": "cakkavattī bhavissati;",
"tha-ap35:11.3": "Pabhassaroti nāmena,",
"tha-ap35:11.4": "uggatejo bhavissati.",
"tha-ap35:12.1": "Divā vā yadi vā rattiṃ,",
"tha-ap35:12.2": "sataraṃsīva uggato;",
"tha-ap35:12.3": "Samantā aṭṭharatanaṃ,",
"tha-ap35:12.4": "ujjotissati khattiyo.",
"tha-ap35:13.1": "Kappasatasahassamhi,",
"tha-ap35:13.2": "okkākakulasambhavo;",
"tha-ap35:13.3": "Gotamo nāma gottena,",
"tha-ap35:13.4": "satthā loke bhavissati.",
"tha-ap35:14.1": "Tusitā hi cavitvāna,",
"tha-ap35:14.2": "sukkamūlena codito;",
"tha-ap35:14.3": "Kaccāno nāma nāmena,",
"tha-ap35:14.4": "brahmabandhu bhavissati.",
"tha-ap35:15.1": "So pacchā pabbajitvāna,",
"tha-ap35:15.2": "arahā hessatināsavo;",
"tha-ap35:15.3": "Gotamo lokapajjoto,",
"tha-ap35:15.4": "aggaṭṭhāne ṭhapessati.",
"tha-ap35:16.1": "Saṃkhittapucchitaṃ pañhaṃ,",
"tha-ap35:16.2": "Vitthārena kathessati;",
"tha-ap35:16.3": "Kathayanto ca taṃ pañhaṃ,",
"tha-ap35:16.4": "Ajjhāsayaṃ pūrayissati’.",
"tha-ap35:17.1": "Aḍḍhe kule abhijāto,",
"tha-ap35:17.2": "brāhmaṇo mantapāragū;",
"tha-ap35:17.3": "Ohāya dhanadhaññāni,",
"tha-ap35:17.4": "pabbajiṃ anagāriyaṃ.",
"tha-ap35:18.1": "Saṃkhittenapi pucchante,",
"tha-ap35:18.2": "vitthārena kathemahaṃ;",
"tha-ap35:18.3": "Ajjhāsayaṃ tesaṃ pūremi,",
"tha-ap35:18.4": "tosemi dvipaduttamaṃ.",
"tha-ap35:19.1": "Tosito me mahāvīro,",
"tha-ap35:19.2": "sayambhū aggapuggalo;",
"tha-ap35:19.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap35:19.4": "etadagge ṭhapesi maṃ.",
"tha-ap35:20.1": "Paṭisambhidā catasso, … pe …",
"tha-ap35:20.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap35:21.1": "Itthaṃ sudaṃ āyasmā mahākaccāno thero imā gāthāyo abhāsitthāti.",
"tha-ap35:22.1": "Mahākaccānattherassāpadānaṃ tatiyaṃ."
}