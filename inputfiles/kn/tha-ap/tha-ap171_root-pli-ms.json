{
"tha-ap171:1.1": "Therāpadāna",
"tha-ap171:2.1": "Supāricariyavagga",
"tha-ap171:3.1": "9. Samādapakattheraapadāna",
"tha-ap171:4.1": "“Nagare bandhumatiyā,",
"tha-ap171:4.2": "mahāpūgagaṇo ahu;",
"tha-ap171:4.3": "Tesāhaṃ pavaro āsiṃ,",
"tha-ap171:4.4": "mama baddhacarā ca te.",
"tha-ap171:5.1": "Sabbe te sannipātetvā,",
"tha-ap171:5.2": "puññakamme samādayiṃ;",
"tha-ap171:5.3": "Māḷaṃ kassāma saṃghassa,",
"tha-ap171:5.4": "puññakkhettaṃ anuttaraṃ.",
"tha-ap171:6.1": "Sādhūti te paṭissutvā,",
"tha-ap171:6.2": "mama chandavasānugā;",
"tha-ap171:6.3": "Niṭṭhāpetvā ca taṃ māḷaṃ,",
"tha-ap171:6.4": "vipassissa adamhase.",
"tha-ap171:7.1": "Ekanavutito kappe,",
"tha-ap171:7.2": "yaṃ māḷamadadiṃ tadā;",
"tha-ap171:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap171:7.4": "māḷadānassidaṃ phalaṃ.",
"tha-ap171:8.1": "Ekūnasattatikappe,",
"tha-ap171:8.2": "eko āsi janādhipo;",
"tha-ap171:8.3": "Ādeyyo nāma nāmena,",
"tha-ap171:8.4": "cakkavattī mahabbalo.",
"tha-ap171:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap171:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap171:10.1": "Itthaṃ sudaṃ āyasmā samādapako thero imā gāthāyo abhāsitthāti.",
"tha-ap171:11.1": "Samādapakattherassāpadānaṃ navamaṃ."
}