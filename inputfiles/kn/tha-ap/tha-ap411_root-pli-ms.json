{
"tha-ap411:1.1": "Therāpadāna",
"tha-ap411:2.1": "Metteyyavagga",
"tha-ap411:3.1": "9. Jatukaṇṇittheraapadāna",
"tha-ap411:4.1": "“Nagare haṃsavatiyā,",
"tha-ap411:4.2": "seṭṭhiputto ahosahaṃ;",
"tha-ap411:4.3": "Samappito kāmaguṇe,",
"tha-ap411:4.4": "paricāremahaṃ tadā.",
"tha-ap411:5.1": "Tato pāsādamāruyha,",
"tha-ap411:5.2": "mahābhoge valañjako;",
"tha-ap411:5.3": "Tattha naccehi gītehi,",
"tha-ap411:5.4": "paricāremahaṃ tadā.",
"tha-ap411:6.1": "Tūriyā āhatā mayhaṃ,",
"tha-ap411:6.2": "sammatāḷasamāhitā;",
"tha-ap411:6.3": "Naccantā itthiyo sabbā,",
"tha-ap411:6.4": "harantiyeva me mano.",
"tha-ap411:7.1": "Celāpikā vāmanikā,",
"tha-ap411:7.2": "kuñjavāsī timajjhikā;",
"tha-ap411:7.3": "Laṅghikā sokajjhāyī ca,",
"tha-ap411:7.4": "parivārenti maṃ sadā.",
"tha-ap411:8.1": "Vetāḷino kumbhathūnī,",
"tha-ap411:8.2": "naṭā ca naccakā bahū;",
"tha-ap411:8.3": "Naṭakā nāṭakā ceva,",
"tha-ap411:8.4": "parivārenti maṃ sadā.",
"tha-ap411:9.1": "Kappakā nhāpakā sūdā,",
"tha-ap411:9.2": "mālākārā supāsakā;",
"tha-ap411:9.3": "Jallā mallā ca te sabbe,",
"tha-ap411:9.4": "parivārenti maṃ sadā.",
"tha-ap411:10.1": "Etesu kīḷamānesu,",
"tha-ap411:10.2": "sikkhite katupāsane;",
"tha-ap411:10.3": "Rattindivaṃ na jānāmi,",
"tha-ap411:10.4": "indova tidasaṅgaṇe.",
"tha-ap411:11.1": "Addhikā pathikā sabbe,",
"tha-ap411:11.2": "yācakā varakā bahū;",
"tha-ap411:11.3": "Upagacchanti te niccaṃ,",
"tha-ap411:11.4": "bhikkhayantā mamaṃ gharaṃ.",
"tha-ap411:12.1": "Samaṇā brāhmaṇā ceva,",
"tha-ap411:12.2": "puññakkhettā anuttarā;",
"tha-ap411:12.3": "Vaḍḍhayantā mamaṃ puññaṃ,",
"tha-ap411:12.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:13.1": "Paṭagā laṭukā sabbe,",
"tha-ap411:13.2": "nigaṇṭhā pupphasāṭakā;",
"tha-ap411:13.3": "Tedaṇḍikā ekasikhā,",
"tha-ap411:13.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:14.1": "Ājīvakā viluttāvī,",
"tha-ap411:14.2": "godhammā devadhammikā;",
"tha-ap411:14.3": "Rajojalladharā ete,",
"tha-ap411:14.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:15.1": "Parittakā santipattā,",
"tha-ap411:15.2": "kodhapugganikā bahū;",
"tha-ap411:15.3": "Tapassī vanacārī ca,",
"tha-ap411:15.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:16.1": "Oḍḍakā damiḷā ceva,",
"tha-ap411:16.2": "sākuḷā malavāḷakā;",
"tha-ap411:16.3": "Savarā yonakā ceva,",
"tha-ap411:16.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:17.1": "Andhakā muṇḍakā sabbe,",
"tha-ap411:17.2": "koṭalā hanuvindakā;",
"tha-ap411:17.3": "Ārāvacīnaraṭṭhā ca,",
"tha-ap411:17.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:18.1": "Alasandakā pallavakā,",
"tha-ap411:18.2": "dhammarā niggamānusā;",
"tha-ap411:18.3": "Gehikā cetaputtā ca,",
"tha-ap411:18.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:19.1": "Mādhurakā kosalakā,",
"tha-ap411:19.2": "kaliṅgā hatthiporikā;",
"tha-ap411:19.3": "Isiṇḍā makkalā ceva,",
"tha-ap411:19.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:20.1": "Celāvakā ārabbhā ca,",
"tha-ap411:20.2": "oghuḷhā meghalā bahū;",
"tha-ap411:20.3": "Khuddakā suddakā ceva,",
"tha-ap411:20.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:21.1": "Rohaṇā sindhavā ceva,",
"tha-ap411:21.2": "citakā ekakaṇṇikā;",
"tha-ap411:21.3": "Suraṭṭhā aparantā ca,",
"tha-ap411:21.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:22.1": "Suppārakā kumārā ca,",
"tha-ap411:22.2": "mallasovaṇṇabhūmikā;",
"tha-ap411:22.3": "Vajjītaṅgā ca te sabbe,",
"tha-ap411:22.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:23.1": "Naḷakārā pesakārā,",
"tha-ap411:23.2": "cammakārā ca tacchakā;",
"tha-ap411:23.3": "Kammārā kumbhakārā ca,",
"tha-ap411:23.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:24.1": "Maṇikārā lohakārā,",
"tha-ap411:24.2": "soṇṇakārā ca dussikā;",
"tha-ap411:24.3": "Tipukārā ca te sabbe,",
"tha-ap411:24.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:25.1": "Usukārā bhamakārā,",
"tha-ap411:25.2": "pesakārā ca gandhikā;",
"tha-ap411:25.3": "Rajakā tunnavāyā ca,",
"tha-ap411:25.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:26.1": "Telikā kaṭṭhahārā ca,",
"tha-ap411:26.2": "udahārā ca pessikā;",
"tha-ap411:26.3": "Sūpikā sūparakkhā ca,",
"tha-ap411:26.4": "āgacchanti mamaṃ gharaṃ.",
"tha-ap411:27.1": "Dovārikā anīkaṭṭhā,",
"tha-ap411:27.2": "Bandhikā pupphachaḍḍakā;",
"tha-ap411:27.3": "Hatthāruhā hatthipālā,",
"tha-ap411:27.4": "Āgacchanti mamaṃ gharaṃ.",
"tha-ap411:28.1": "Ānandassa mahārañño,",
"tha-ap411:28.2": "mamatthassa adāsahaṃ;",
"tha-ap411:28.3": "Sattavaṇṇena ratanena,",
"tha-ap411:28.4": "ūnatthaṃ pūrayāmahaṃ.",
"tha-ap411:29.1": "Ye mayā kittitā sabbe,",
"tha-ap411:29.2": "nānāvaṇṇā bahū janā;",
"tha-ap411:29.3": "Tesāhaṃ cittamaññāya,",
"tha-ap411:29.4": "tappayiṃ ratanenahaṃ.",
"tha-ap411:30.1": "Vaggūsu bhāsamānāsu,",
"tha-ap411:30.2": "vajjamānāsu bherisu;",
"tha-ap411:30.3": "Saṅkhesu dhamayantesu,",
"tha-ap411:30.4": "sakagehe ramāmahaṃ.",
"tha-ap411:31.1": "Bhagavā tamhi samaye,",
"tha-ap411:31.2": "padumuttaranāyako;",
"tha-ap411:31.3": "Vasīsatasahassehi,",
"tha-ap411:31.4": "parikkhīṇāsavehi so.",
"tha-ap411:32.1": "Bhikkhūhi sahito vīthiṃ,",
"tha-ap411:32.2": "paṭipajjittha cakkhumā;",
"tha-ap411:32.3": "Obhāsento disā sabbā,",
"tha-ap411:32.4": "dīparukkhova jotati.",
"tha-ap411:33.1": "Vajjanti bheriyo sabbā,",
"tha-ap411:33.2": "gacchante lokanāyake;",
"tha-ap411:33.3": "Pabhā niddhāvate tassa,",
"tha-ap411:33.4": "sataraṃsīva uggato.",
"tha-ap411:34.1": "Kavāṭantarikāyāpi,",
"tha-ap411:34.2": "paviṭṭhena ca rasminā;",
"tha-ap411:34.3": "Antogharesu vipulo,",
"tha-ap411:34.4": "āloko āsi tāvade.",
"tha-ap411:35.1": "Pabhaṃ disvāna buddhassa,",
"tha-ap411:35.2": "pārisajje avocahaṃ;",
"tha-ap411:35.3": "‘Nissaṃsayaṃ buddhaseṭṭho,",
"tha-ap411:35.4": "imaṃ vīthimupāgato’.",
"tha-ap411:36.1": "Khippaṃ oruyha pāsādā,",
"tha-ap411:36.2": "agamiṃ antarāpaṇaṃ;",
"tha-ap411:36.3": "Sambuddhaṃ abhivādetvā,",
"tha-ap411:36.4": "idaṃ vacanamabraviṃ.",
"tha-ap411:37.1": "‘Anukampatu me buddho,",
"tha-ap411:37.2": "jalajuttamanāyako;",
"tha-ap411:37.3": "Vasīsatasahassehi,",
"tha-ap411:37.4": "adhivāsesi so muni’.",
"tha-ap411:38.1": "Nimantetvāna sambuddhaṃ,",
"tha-ap411:38.2": "abhinesiṃ sakaṃ gharaṃ;",
"tha-ap411:38.3": "Tattha annena pānena,",
"tha-ap411:38.4": "santappesiṃ mahāmuniṃ.",
"tha-ap411:39.1": "Bhuttāviṃ kālamaññāya,",
"tha-ap411:39.2": "buddhaseṭṭhassa tādino;",
"tha-ap411:39.3": "Sataṅgikena tūriyena,",
"tha-ap411:39.4": "buddhaseṭṭhaṃ upaṭṭhahiṃ.",
"tha-ap411:40.1": "Padumuttaro lokavidū,",
"tha-ap411:40.2": "āhutīnaṃ paṭiggaho;",
"tha-ap411:40.3": "Antoghare nisīditvā,",
"tha-ap411:40.4": "imā gāthā abhāsatha.",
"tha-ap411:41.1": "‘Yo maṃ tūriyehupaṭṭhāsi,",
"tha-ap411:41.2": "annapānañcadāsi me;",
"tha-ap411:41.3": "Tamahaṃ kittayissāmi,",
"tha-ap411:41.4": "suṇātha mama bhāsato.",
"tha-ap411:42.1": "Pahūtabhakkho hutvāna,",
"tha-ap411:42.2": "sahirañño sabhojano;",
"tha-ap411:42.3": "Catudīpe ekarajjaṃ,",
"tha-ap411:42.4": "kārayissatiyaṃ naro.",
"tha-ap411:43.1": "Pañca sīle samādāya,",
"tha-ap411:43.2": "dasakammapathe tato;",
"tha-ap411:43.3": "Samādāya pavattento,",
"tha-ap411:43.4": "parisaṃ sikkhāpayissati.",
"tha-ap411:44.1": "Tūriyasatasahassāni,",
"tha-ap411:44.2": "bheriyo samalaṅkatā;",
"tha-ap411:44.3": "Vajjayissantimaṃ niccaṃ,",
"tha-ap411:44.4": "upaṭṭhānassidaṃ phalaṃ.",
"tha-ap411:45.1": "Tiṃsakappasahassāni,",
"tha-ap411:45.2": "devaloke ramissati;",
"tha-ap411:45.3": "Catusaṭṭhikkhattuṃ devindo,",
"tha-ap411:45.4": "devarajjaṃ karissati.",
"tha-ap411:46.1": "Catusaṭṭhikkhattuṃ rājā,",
"tha-ap411:46.2": "cakkavattī bhavissati;",
"tha-ap411:46.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap411:46.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap411:47.1": "Kappasatasahassamhi,",
"tha-ap411:47.2": "okkākakulasambhavo;",
"tha-ap411:47.3": "Gotamo nāma gottena,",
"tha-ap411:47.4": "satthā loke bhavissati.",
"tha-ap411:48.1": "Upapajjati yaṃ yoniṃ,",
"tha-ap411:48.2": "devattaṃ atha mānusaṃ;",
"tha-ap411:48.3": "Anūnabhogo hutvāna,",
"tha-ap411:48.4": "manussattaṃ gamissati.",
"tha-ap411:49.1": "Ajjhāyako bhavitvāna,",
"tha-ap411:49.2": "tiṇṇaṃ vedāna pāragū;",
"tha-ap411:49.3": "Uttamatthaṃ gavesanto,",
"tha-ap411:49.4": "carissati mahiṃ imaṃ.",
"tha-ap411:50.1": "So pacchā pabbajitvāna,",
"tha-ap411:50.2": "sukkamūlena codito;",
"tha-ap411:50.3": "Gotamassa bhagavato,",
"tha-ap411:50.4": "sāsanebhiramissati.",
"tha-ap411:51.1": "Ārādhayitvāna sambuddhaṃ,",
"tha-ap411:51.2": "gotamaṃ sakyapuṅgavaṃ;",
"tha-ap411:51.3": "Kilese jhāpayitvāna,",
"tha-ap411:51.4": "arahāyaṃ bhavissati’.",
"tha-ap411:52.1": "Vipine byaggharājāva,",
"tha-ap411:52.2": "migarājāva kesarī;",
"tha-ap411:52.3": "Abhīto viharāmajja,",
"tha-ap411:52.4": "sakyaputtassa sāsane.",
"tha-ap411:53.1": "Devaloke manusse vā,",
"tha-ap411:53.2": "dalidde duggatimhi vā;",
"tha-ap411:53.3": "Nibbattiṃ me na passāmi,",
"tha-ap411:53.4": "upaṭṭhānassidaṃ phalaṃ.",
"tha-ap411:54.1": "Vivekamanuyuttomhi,",
"tha-ap411:54.2": "upasanto nirūpadhi;",
"tha-ap411:54.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap411:54.4": "viharāmi anāsavo.",
"tha-ap411:55.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap411:55.4": "viharāmi anāsavo.",
"tha-ap411:56.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap411:56.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap411:57.1": "Paṭisambhidā catasso, … pe …",
"tha-ap411:57.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap411:58.1": "Itthaṃ sudaṃ āyasmā jatukaṇṇitthero imā gāthāyo abhāsitthāti.",
"tha-ap411:59.1": "Jatukaṇṇittherassāpadānaṃ navamaṃ."
}