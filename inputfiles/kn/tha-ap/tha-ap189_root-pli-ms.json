{
"tha-ap189:1.1": "Therāpadāna",
"tha-ap189:2.1": "Kuṭajapupphiyavagga",
"tha-ap189:3.1": "7. Ekacintikattheraapadāna",
"tha-ap189:4.1": "“Yadā devo devakāyā,",
"tha-ap189:4.2": "cavate āyusaṅkhayā;",
"tha-ap189:4.3": "Tayo saddā niccharanti,",
"tha-ap189:4.4": "devānaṃ anumodataṃ.",
"tha-ap189:5.1": "‘Ito bho sugatiṃ gaccha,",
"tha-ap189:5.2": "manussānaṃ sahabyataṃ;",
"tha-ap189:5.3": "Manussabhūto saddhamme,",
"tha-ap189:5.4": "labha saddhaṃ anuttaraṃ.",
"tha-ap189:6.1": "Sā te saddhā niviṭṭhāssa,",
"tha-ap189:6.2": "mūlajātā patiṭṭhitā;",
"tha-ap189:6.3": "Yāvajīvaṃ asaṃhīrā,",
"tha-ap189:6.4": "saddhamme suppavedite.",
"tha-ap189:7.1": "Kāyena kusalaṃ katvā,",
"tha-ap189:7.2": "vācāya kusalaṃ bahuṃ;",
"tha-ap189:7.3": "Manasā kusalaṃ katvā,",
"tha-ap189:7.4": "abyāpajjaṃ nirūpadhiṃ.",
"tha-ap189:8.1": "Tato opadhikaṃ puññaṃ,",
"tha-ap189:8.2": "katvā dānena taṃ bahuṃ;",
"tha-ap189:8.3": "Aññepi macce saddhamme,",
"tha-ap189:8.4": "brahmacariye nivesaya’.",
"tha-ap189:9.1": "Imāya anukampāya,",
"tha-ap189:9.2": "devā devaṃ yadā vidū;",
"tha-ap189:9.3": "Cavantaṃ anumodanti,",
"tha-ap189:9.4": "ehi deva punappunaṃ.",
"tha-ap189:10.1": "Saṃvego me tadā āsi,",
"tha-ap189:10.2": "devasaṅghe samāgate;",
"tha-ap189:10.3": "Kaṃ su nāma ahaṃ yoniṃ,",
"tha-ap189:10.4": "gamissāmi ito cuto.",
"tha-ap189:11.1": "Mama saṃvegamaññāya,",
"tha-ap189:11.2": "samaṇo bhāvitindriyo;",
"tha-ap189:11.3": "Mamuddharitukāmo so,",
"tha-ap189:11.4": "āgacchi mama santikaṃ.",
"tha-ap189:12.1": "Sumano nāma nāmena,",
"tha-ap189:12.2": "padumuttarasāvako;",
"tha-ap189:12.3": "Atthadhammānusāsitvā,",
"tha-ap189:12.4": "saṃvejesi mamaṃ tadā.",
"tha-ap189:13.1": "Tassāhaṃ vacanaṃ sutvā,",
"tha-ap189:13.2": "buddhe cittaṃ pasādayiṃ;",
"tha-ap189:13.3": "Taṃ dhīraṃ abhivādetvā,",
"tha-ap189:13.4": "tattha kālaṅkato ahaṃ.",
"tha-ap189:14.1": "Upapajjiṃ sa tattheva,",
"tha-ap189:14.2": "sukkamūlena codito;",
"tha-ap189:14.3": "Kappānaṃ satasahassaṃ,",
"tha-ap189:14.4": "duggatiṃ nupapajjahaṃ.",
"tha-ap189:15.1": "Paṭisambhidā catasso, … pe …",
"tha-ap189:15.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap189:16.1": "Itthaṃ sudaṃ āyasmā ekacintiko thero imā gāthāyo abhāsitthāti.",
"tha-ap189:17.1": "Ekacintikattherassāpadānaṃ sattamaṃ."
}