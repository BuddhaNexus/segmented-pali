{
"tha-ap152:1.1": "Therāpadāna",
"tha-ap152:2.1": "Chattavagga",
"tha-ap152:3.1": "10. Pallaṅkadāyakattheraapadāna",
"tha-ap152:4.1": "“Sumedhassa bhagavato,",
"tha-ap152:4.2": "lokajeṭṭhassa tādino;",
"tha-ap152:4.3": "Pallaṅko hi mayā dinno,",
"tha-ap152:4.4": "sauttarasapacchado.",
"tha-ap152:5.1": "Sattaratanasampanno,",
"tha-ap152:5.2": "pallaṅko āsi so tadā;",
"tha-ap152:5.3": "Mama saṅkappamaññāya,",
"tha-ap152:5.4": "nibbattati sadā mama.",
"tha-ap152:6.1": "Tiṃsakappasahassamhi,",
"tha-ap152:6.2": "pallaṅkamadadiṃ tadā;",
"tha-ap152:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap152:6.4": "pallaṅkassa idaṃ phalaṃ.",
"tha-ap152:7.1": "Vīsakappasahassamhi,",
"tha-ap152:7.2": "suvaṇṇābhā tayo janā;",
"tha-ap152:7.3": "Sattaratanasampannā,",
"tha-ap152:7.4": "cakkavattī mahabbalā.",
"tha-ap152:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap152:8.4": "kataṃ buddhassa sāsanaṃ”. #1987",
"tha-ap152:9.1": "Itthaṃ sudaṃ āyasmā pallaṅkadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap152:10.1": "Pallaṅkadāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap152:11.1": "Chattavaggo pannarasamo.",
"tha-ap152:12.1": "Tassuddānaṃ",
"tha-ap152:13.1": "Chattaṃ thambho ca vedi ca,",
"tha-ap152:13.2": "parivārumapupphiyo;",
"tha-ap152:13.3": "Anulepo ca maggo ca,",
"tha-ap152:13.4": "phalako ca vaṭaṃsako;",
"tha-ap152:13.5": "Pallaṅkadāyī ca gāthāyo,",
"tha-ap152:13.6": "chappaññāsa pakittitāti."
}