{
"tha-ap419:1.1": "Therāpadāna",
"tha-ap419:2.1": "Bhaddālivagga",
"tha-ap419:3.1": "7. Ucchaṅgapupphiyattheraapadāna",
"tha-ap419:4.1": "“Nagare bandhumatiyā,",
"tha-ap419:4.2": "ahosiṃ māliko tadā;",
"tha-ap419:4.3": "Ucchaṅgaṃ pūrayitvāna,",
"tha-ap419:4.4": "agamaṃ antarāpaṇaṃ.",
"tha-ap419:5.1": "Bhagavā tamhi samaye,",
"tha-ap419:5.2": "bhikkhusaṃghapurakkhato;",
"tha-ap419:5.3": "Mahatā ānubhāvena,",
"tha-ap419:5.4": "niyyāti lokanāyako.",
"tha-ap419:6.1": "Disvāna lokapajjotaṃ,",
"tha-ap419:6.2": "vipassiṃ lokatāraṇaṃ;",
"tha-ap419:6.3": "Pupphaṃ paggayha ucchaṅgā,",
"tha-ap419:6.4": "buddhaseṭṭhaṃ apūjayiṃ.",
"tha-ap419:7.1": "Ekanavutito kappe,",
"tha-ap419:7.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap419:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap419:7.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap419:8.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap419:8.4": "viharāmi anāsavo.",
"tha-ap419:9.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap419:9.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap419:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap419:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap419:11.1": "Itthaṃ sudaṃ āyasmā ucchaṅgapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap419:12.1": "Ucchaṅgapupphiyattherassāpadānaṃ sattamaṃ."
}