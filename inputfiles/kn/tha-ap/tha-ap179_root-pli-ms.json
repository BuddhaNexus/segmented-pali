{
  "tha-ap179:0.1": "Therāpadāna ",
  "tha-ap179:0.2": "Kumudavagga ",
  "tha-ap179:0.3": "7. Ekadīpiyattheraapadāna ",
  "tha-ap179:1.1": "“Padumuttarassa munino, ",
  "tha-ap179:1.2": "saḷale bodhimuttame; ",
  "tha-ap179:1.3": "Pasannacitto sumano, ",
  "tha-ap179:1.4": "ekadīpaṁ adāsahaṁ. ",
  "tha-ap179:2.1": "Bhave nibbattamānamhi, ",
  "tha-ap179:2.2": "nibbatte puññasañcaye; ",
  "tha-ap179:2.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap179:2.4": "dīpadānassidaṁ phalaṁ. ",
  "tha-ap179:3.1": "Soḷase kappasahasse, ",
  "tha-ap179:3.2": "ito te caturo janā; ",
  "tha-ap179:3.3": "Candābhā nāma nāmena, ",
  "tha-ap179:3.4": "cakkavattī mahabbalā. ",
  "tha-ap179:4.1": "Paṭisambhidā catasso, ",
  "tha-ap179:4.2": "…pe… ",
  "tha-ap179:4.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap179:5.1": "Itthaṁ sudaṁ āyasmā ekadīpiyo thero imā gāthāyo abhāsitthāti. ",
  "tha-ap179:6.1": "Ekadīpiyattherassāpadānaṁ sattamaṁ. ",
  "tha-ap179:6.2": "Navamaṁ bhāṇavāraṁ. "
}