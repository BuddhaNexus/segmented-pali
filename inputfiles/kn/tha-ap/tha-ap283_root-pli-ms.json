{
"tha-ap283:1.1": "Therāpadāna",
"tha-ap283:2.1": "Paṇṇadāyakavagga",
"tha-ap283:3.1": "1. Paṇṇadāyakattheraapadāna",
"tha-ap283:4.1": "“Paṇṇasāle nisinnomhi,",
"tha-ap283:4.2": "paṇṇabhojanabhojano;",
"tha-ap283:4.3": "Upaviṭṭhañca maṃ santaṃ,",
"tha-ap283:4.4": "upāgacchi mahāisi.",
"tha-ap283:5.1": "Siddhattho lokapajjoto,",
"tha-ap283:5.2": "sabbalokatikicchako;",
"tha-ap283:5.3": "Tassa paṇṇaṃ mayā dinnaṃ,",
"tha-ap283:5.4": "nisinnaṃ paṇṇasanthare.",
"tha-ap283:6.1": "Catunnavutito kappe,",
"tha-ap283:6.2": "yaṃ paṇṇamadadiṃ tadā;",
"tha-ap283:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap283:6.4": "paṇṇadānassidaṃ phalaṃ.",
"tha-ap283:7.1": "Paṭisambhidā catasso,",
"tha-ap283:7.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap283:7.3": "Chaḷabhiññā sacchikatā,",
"tha-ap283:7.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap283:8.1": "Itthaṃ sudaṃ āyasmā paṇṇadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap283:9.1": "Paṇṇadāyakattherassāpadānaṃ paṭhamaṃ."
}