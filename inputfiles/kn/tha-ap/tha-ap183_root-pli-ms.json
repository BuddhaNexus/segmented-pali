{
"tha-ap183:1.1": "Therāpadāna",
"tha-ap183:2.1": "Kuṭajapupphiyavagga",
"tha-ap183:3.1": "1. Kuṭajapupphiyattheraapadāna",
"tha-ap183:4.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
"tha-ap183:4.2": "Sataraṃsiṃva uggataṃ;",
"tha-ap183:4.3": "Disaṃ anuvilokentaṃ,",
"tha-ap183:4.4": "Gacchantaṃ anilañjase.",
"tha-ap183:5.1": "Kuṭajaṃ pupphitaṃ disvā,",
"tha-ap183:5.2": "saṃvitthatasamotthataṃ;",
"tha-ap183:5.3": "Rukkhato ocinitvāna,",
"tha-ap183:5.4": "phussassa abhiropayiṃ.",
"tha-ap183:6.1": "Dvenavute ito kappe,",
"tha-ap183:6.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap183:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap183:6.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap183:7.1": "Ito sattarase kappe,",
"tha-ap183:7.2": "tayo āsuṃ supupphitā;",
"tha-ap183:7.3": "Sattaratanasampannā,",
"tha-ap183:7.4": "cakkavattī mahabbalā.",
"tha-ap183:8.1": "Paṭisambhidā catasso,",
"tha-ap183:8.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap183:8.3": "Chaḷabhiññā sacchikatā,",
"tha-ap183:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap183:9.1": "Itthaṃ sudaṃ āyasmā kuṭajapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap183:10.1": "Kuṭajapupphiyattherassāpadānaṃ paṭhamaṃ."
}