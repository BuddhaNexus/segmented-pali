{
"tha-ap204:1.1": "Therāpadāna",
"tha-ap204:2.1": "Kaṇikārapupphiyavagga",
"tha-ap204:3.1": "2. Minelapupphiyattheraapadāna",
"tha-ap204:4.1": "“Suvaṇṇavaṇṇo bhagavā,",
"tha-ap204:4.2": "sataraṃsī patāpavā;",
"tha-ap204:4.3": "Caṅkamanaṃ samārūḷho,",
"tha-ap204:4.4": "mettacitto sikhīsabho.",
"tha-ap204:5.1": "Pasannacitto sumano,",
"tha-ap204:5.2": "vanditvā ñāṇamuttamaṃ;",
"tha-ap204:5.3": "Minelapupphaṃ paggayha,",
"tha-ap204:5.4": "buddhassa abhiropayiṃ.",
"tha-ap204:6.1": "Ekattiṃse ito kappe,",
"tha-ap204:6.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap204:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap204:6.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap204:7.1": "Ekūnatiṃsakappamhi,",
"tha-ap204:7.2": "sumeghaghananāmako;",
"tha-ap204:7.3": "Sattaratanasampanno,",
"tha-ap204:7.4": "cakkavattī mahabbalo.",
"tha-ap204:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap204:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap204:9.1": "Itthaṃ sudaṃ āyasmā minelapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap204:10.1": "Minelapupphiyattherassāpadānaṃ dutiyaṃ."
}