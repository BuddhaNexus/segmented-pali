{
"tha-ap12:1.1": "Therāpadāna",
"tha-ap12:2.1": "Buddhavagga",
"tha-ap12:3.1": "12. Ānandattheraapadāna",
"tha-ap12:4.1": "“Ārāmadvārā nikkhamma,",
"tha-ap12:4.2": "padumuttaro mahāmuni;",
"tha-ap12:4.3": "Vassento amataṃ vuṭṭhiṃ,",
"tha-ap12:4.4": "nibbāpesi mahājanaṃ.",
"tha-ap12:5.1": "Satasahassaṃ te dhīrā,",
"tha-ap12:5.2": "chaḷabhiññā mahiddhikā;",
"tha-ap12:5.3": "Parivārenti sambuddhaṃ,",
"tha-ap12:5.4": "chāyāva anapāyinī.",
"tha-ap12:6.1": "Hatthikkhandhagato āsiṃ,",
"tha-ap12:6.2": "setacchattaṃ varuttamaṃ;",
"tha-ap12:6.3": "Sucārurūpaṃ disvāna,",
"tha-ap12:6.4": "vitti me udapajjatha.",
"tha-ap12:7.1": "Oruyha hatthikhandhamhā,",
"tha-ap12:7.2": "upagacchiṃ narāsabhaṃ;",
"tha-ap12:7.3": "Ratanāmayachattaṃ me,",
"tha-ap12:7.4": "buddhaseṭṭhassa dhārayiṃ.",
"tha-ap12:8.1": "Mama saṅkappamaññāya,",
"tha-ap12:8.2": "padumuttaro mahāisi;",
"tha-ap12:8.3": "Taṃ kathaṃ ṭhapayitvāna,",
"tha-ap12:8.4": "imā gāthā abhāsatha.",
"tha-ap12:9.1": "‘Yo so chattamadhāresi,",
"tha-ap12:9.2": "soṇṇālaṅkārabhūsitaṃ;",
"tha-ap12:9.3": "Tamahaṃ kittayissāmi,",
"tha-ap12:9.4": "suṇotha mama bhāsato.",
"tha-ap12:10.1": "Ito gantvā ayaṃ poso,",
"tha-ap12:10.2": "tusitaṃ āvasissati;",
"tha-ap12:10.3": "Anubhossati sampattiṃ,",
"tha-ap12:10.4": "accharāhi purakkhato.",
"tha-ap12:11.1": "Catuttiṃsatikkhattuñca,",
"tha-ap12:11.2": "devarajjaṃ karissati;",
"tha-ap12:11.3": "Balādhipo aṭṭhasataṃ,",
"tha-ap12:11.4": "vasudhaṃ āvasissati.",
"tha-ap12:12.1": "Aṭṭhapaññāsakkhattuñca,",
"tha-ap12:12.2": "cakkavattī bhavissati;",
"tha-ap12:12.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap12:12.4": "mahiyā kārayissati.",
"tha-ap12:13.1": "Kappasatasahassamhi,",
"tha-ap12:13.2": "okkākakulasambhavo;",
"tha-ap12:13.3": "Gotamo nāma gottena,",
"tha-ap12:13.4": "satthā loke bhavissati.",
"tha-ap12:14.1": "Sakyānaṃ kulaketussa,",
"tha-ap12:14.2": "ñātibandhu bhavissati;",
"tha-ap12:14.3": "Ānando nāma nāmena,",
"tha-ap12:14.4": "upaṭṭhāko mahesino.",
"tha-ap12:15.1": "Ātāpī nipako cāpi,",
"tha-ap12:15.2": "bāhusacce sukovido;",
"tha-ap12:15.3": "Nivātavutti atthaddho,",
"tha-ap12:15.4": "sabbapāṭhī bhavissati.",
"tha-ap12:16.1": "Padhānapahitatto so,",
"tha-ap12:16.2": "upasanto nirūpadhi;",
"tha-ap12:16.3": "Sabbāsave pariññāya,",
"tha-ap12:16.4": "nibbāyissatināsavo.",
"tha-ap12:17.1": "Santi āraññakā nāgā,",
"tha-ap12:17.2": "kuñjarā saṭṭhihāyanā;",
"tha-ap12:17.3": "Tidhāpabhinnā mātaṅgā,",
"tha-ap12:17.4": "īsādantā urūḷhavā.",
"tha-ap12:18.1": "Anekasatasahassā,",
"tha-ap12:18.2": "paṇḍitāpi mahiddhikā;",
"tha-ap12:18.3": "Sabbe te buddhanāgassa,",
"tha-ap12:18.4": "na hontupaṇidhimhi te’.",
"tha-ap12:19.1": "Ādiyāme namassāmi,",
"tha-ap12:19.2": "majjhime atha pacchime;",
"tha-ap12:19.3": "Pasannacitto sumano,",
"tha-ap12:19.4": "buddhaseṭṭhaṃ upaṭṭhahiṃ.",
"tha-ap12:20.1": "Ātāpī nipako cāpi,",
"tha-ap12:20.2": "sampajāno patissato;",
"tha-ap12:20.3": "Sotāpattiphalaṃ patto,",
"tha-ap12:20.4": "sekhabhūmīsu kovido.",
"tha-ap12:21.1": "Satasahassito kappe,",
"tha-ap12:21.2": "yaṃ kammamabhinīhariṃ;",
"tha-ap12:21.3": "Tāhaṃ bhūmimanuppatto,",
"tha-ap12:21.4": "ṭhitā saddhammamācalā.",
"tha-ap12:22.1": "Svāgataṃ vata me āsi,",
"tha-ap12:22.2": "buddhaseṭṭhassa santike;",
"tha-ap12:22.3": "Tisso vijjā anuppattā,",
"tha-ap12:22.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap12:23.1": "Paṭisambhidā catasso,",
"tha-ap12:23.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap12:23.3": "Chaḷabhiññā sacchikatā,",
"tha-ap12:23.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap12:24.1": "Itthaṃ sudaṃ āyasmā ānando thero imā gāthāyo abhāsitthāti.",
"tha-ap12:25.1": "Ānandattherassāpadānaṃ dasamaṃ.",
"tha-ap12:26.1": "Tassuddānaṃ",
"tha-ap12:27.1": "Buddho paccekabuddho ca,",
"tha-ap12:27.2": "sāriputto ca kolito;",
"tha-ap12:27.3": "Kassapo anuruddho ca,",
"tha-ap12:27.4": "puṇṇatthero upāli ca.",
"tha-ap12:28.1": "Aññāsikoṇḍañño piṇḍolo,",
"tha-ap12:28.2": "revatānandapaṇḍito;",
"tha-ap12:28.3": "Chasatāni ca paññāsa,",
"tha-ap12:28.4": "gāthāyo sabbapiṇḍitā.",
"tha-ap12:29.1": "Apadāne buddhavaggo paṭhamo."
}