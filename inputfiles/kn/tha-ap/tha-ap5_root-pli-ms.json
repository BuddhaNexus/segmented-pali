{
"tha-ap5:1.1": "Therāpadāna",
"tha-ap5:2.1": "Buddhavagga",
"tha-ap5:3.1": "5. Mahākassapattheraapadāna",
"tha-ap5:4.1": "“Padumuttarassa bhagavato,",
"tha-ap5:4.2": "Lokajeṭṭhassa tādino;",
"tha-ap5:4.3": "Nibbute lokanāthamhi,",
"tha-ap5:4.4": "Pūjaṃ kubbanti satthuno.",
"tha-ap5:5.1": "Udaggacittā janatā,",
"tha-ap5:5.2": "āmoditapamoditā;",
"tha-ap5:5.3": "Tesu saṃvegajātesu,",
"tha-ap5:5.4": "pīti me udapajjatha.",
"tha-ap5:6.1": "Ñātimitte samānetvā,",
"tha-ap5:6.2": "idaṃ vacanamabraviṃ;",
"tha-ap5:6.3": "Parinibbuto mahāvīro,",
"tha-ap5:6.4": "handa pūjaṃ karomase.",
"tha-ap5:7.1": "Sādhūti te paṭissutvā,",
"tha-ap5:7.2": "bhiyyo hāsaṃ janiṃsu me;",
"tha-ap5:7.3": "Buddhasmiṃ lokanāthamhi,",
"tha-ap5:7.4": "kāhāma puññasañcayaṃ.",
"tha-ap5:8.1": "Agghiyaṃ sukataṃ katvā,",
"tha-ap5:8.2": "satahatthasamuggataṃ;",
"tha-ap5:8.3": "Diyaḍḍhahatthapatthaṭaṃ,",
"tha-ap5:8.4": "vimānaṃ nabhamuggataṃ.",
"tha-ap5:9.1": "Katvāna hammiyaṃ tattha,",
"tha-ap5:9.2": "tālapantīhi cittitaṃ;",
"tha-ap5:9.3": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap5:9.4": "cetiyaṃ pūjayuttamaṃ.",
"tha-ap5:10.1": "Aggikkhandhova jalito,",
"tha-ap5:10.2": "kiṃsuko iva phullito;",
"tha-ap5:10.3": "Indalaṭṭhīva ākāse,",
"tha-ap5:10.4": "obhāsati catuddisā.",
"tha-ap5:11.1": "Tattha cittaṃ pasādetvā,",
"tha-ap5:11.2": "katvāna kusalaṃ bahuṃ;",
"tha-ap5:11.3": "Pubbakammaṃ saritvāna,",
"tha-ap5:11.4": "tidasaṃ upapajjahaṃ.",
"tha-ap5:12.1": "Sahassayuttaṃ hayavāhiṃ,",
"tha-ap5:12.2": "Dibbayānamadhiṭṭhito;",
"tha-ap5:12.3": "Ubbiddhaṃ bhavanaṃ mayhaṃ,",
"tha-ap5:12.4": "Sattabhūmaṃ samuggataṃ.",
"tha-ap5:13.1": "Kūṭāgārasahassāni,",
"tha-ap5:13.2": "sabbasoṇṇamayā ahuṃ;",
"tha-ap5:13.3": "Jalanti sakatejena,",
"tha-ap5:13.4": "disā sabbā pabhāsayaṃ.",
"tha-ap5:14.1": "Santi aññepi niyyūhā,",
"tha-ap5:14.2": "lohitaṅgamayā tadā;",
"tha-ap5:14.3": "Tepi jotanti ābhāya,",
"tha-ap5:14.4": "samantā caturo disā.",
"tha-ap5:15.1": "Puññakammābhinibbattā,",
"tha-ap5:15.2": "kūṭāgārā sunimmitā;",
"tha-ap5:15.3": "Maṇimayāpi jotanti,",
"tha-ap5:15.4": "disā dasa samantato.",
"tha-ap5:16.1": "Tesaṃ ujjotamānānaṃ,",
"tha-ap5:16.2": "obhāso vipulo ahu;",
"tha-ap5:16.3": "Sabbe deve abhibhomi,",
"tha-ap5:16.4": "puññakammassidaṃ phalaṃ.",
"tha-ap5:17.1": "Saṭṭhikappasahassamhi,",
"tha-ap5:17.2": "ubbiddho nāma khattiyo;",
"tha-ap5:17.3": "Cāturanto vijitāvī,",
"tha-ap5:17.4": "pathaviṃ āvasiṃ ahaṃ.",
"tha-ap5:18.1": "Tatheva bhaddake kappe,",
"tha-ap5:18.2": "tiṃsakkhattuṃ ahosahaṃ;",
"tha-ap5:18.3": "Sakakammābhiraddhomhi,",
"tha-ap5:18.4": "cakkavattī mahabbalo.",
"tha-ap5:19.1": "Sattaratanasampanno,",
"tha-ap5:19.2": "catudīpamhi issaro;",
"tha-ap5:19.3": "Tatthāpi bhavanaṃ mayhaṃ,",
"tha-ap5:19.4": "indalaṭṭhīva uggataṃ.",
"tha-ap5:20.1": "Āyāmato catubbīsaṃ,",
"tha-ap5:20.2": "vitthārena ca dvādasa;",
"tha-ap5:20.3": "Rammaṇaṃ nāma nagaraṃ,",
"tha-ap5:20.4": "daḷhapākāratoraṇaṃ.",
"tha-ap5:21.1": "Āyāmato pañcasataṃ,",
"tha-ap5:21.2": "vitthārena tadaḍḍhakaṃ;",
"tha-ap5:21.3": "Ākiṇṇaṃ janakāyehi,",
"tha-ap5:21.4": "tidasānaṃ puraṃ viya.",
"tha-ap5:22.1": "Yathā sūcighare sūcī,",
"tha-ap5:22.2": "pakkhittā paṇṇavīsati;",
"tha-ap5:22.3": "Aññamaññaṃ paghaṭṭenti,",
"tha-ap5:22.4": "ākiṇṇaṃ hoti laṅkataṃ.",
"tha-ap5:23.1": "Evampi nagaraṃ mayhaṃ,",
"tha-ap5:23.2": "hatthissarathasaṅkulaṃ;",
"tha-ap5:23.3": "Manussehi sadākiṇṇaṃ,",
"tha-ap5:23.4": "rammaṇaṃ nagaruttamaṃ.",
"tha-ap5:24.1": "Tattha bhutvā pivitvā ca,",
"tha-ap5:24.2": "puna devattanaṃ gato;",
"tha-ap5:24.3": "Bhave pacchimake mayhaṃ,",
"tha-ap5:24.4": "ahosi kulasampadā.",
"tha-ap5:25.1": "Brāhmaññakulasambhūto,",
"tha-ap5:25.2": "mahāratanasañcayo;",
"tha-ap5:25.3": "Asītikoṭiyo hitvā,",
"tha-ap5:25.4": "hiraññassāpi pabbajiṃ.",
"tha-ap5:26.1": "Paṭisambhidā catasso,",
"tha-ap5:26.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap5:26.3": "Chaḷabhiññā sacchikatā,",
"tha-ap5:26.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap5:27.1": "Itthaṃ sudaṃ āyasmā mahākassapo thero imā gāthāyo abhāsitthāti.",
"tha-ap5:28.1": "Mahākassapattherassāpadānaṃ tatiyaṃ."
}