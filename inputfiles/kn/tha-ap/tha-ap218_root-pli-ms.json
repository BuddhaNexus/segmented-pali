{
"tha-ap218:1.1": "Therāpadāna",
"tha-ap218:2.1": "Hatthivagga",
"tha-ap218:3.1": "6 Sandhitattheraapadāna",
"tha-ap218:4.1": "“Assatthe haritobhāse,",
"tha-ap218:4.2": "saṃvirūḷhamhi pādape;",
"tha-ap218:4.3": "Ekaṃ buddhagataṃ saññaṃ,",
"tha-ap218:4.4": "alabhiṃhaṃ patissato.",
"tha-ap218:5.1": "Ekattiṃse ito kappe,",
"tha-ap218:5.2": "yaṃ saññamalabhiṃ tadā;",
"tha-ap218:5.3": "Tassā saññāya vāhasā,",
"tha-ap218:5.4": "patto me āsavakkhayo.",
"tha-ap218:6.1": "Ito terasakappamhi,",
"tha-ap218:6.2": "dhaniṭṭho nāma khattiyo;",
"tha-ap218:6.3": "Sattaratanasampanno,",
"tha-ap218:6.4": "cakkavattī mahabbalo.",
"tha-ap218:7.1": "Paṭisambhidā catasso, … pe …",
"tha-ap218:7.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap218:8.1": "Itthaṃ sudaṃ āyasmā sandhito thero imā gāthāyo abhāsitthāti.",
"tha-ap218:9.1": "Sandhitattherassāpadānaṃ chaṭṭhaṃ."
}