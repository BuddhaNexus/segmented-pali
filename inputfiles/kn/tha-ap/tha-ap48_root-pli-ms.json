{
  "tha-ap48:0.1": "Therāpadāna ",
  "tha-ap48:0.2": "Upālivagga ",
  "tha-ap48:0.3": "6. Padumacchadaniyattheraapadāna ",
  "tha-ap48:1.1": "“Nibbute lokanāthamhi, ",
  "tha-ap48:1.2": "vipassimhaggapuggale; ",
  "tha-ap48:1.3": "Suphullapadumaṁ gayha, ",
  "tha-ap48:1.4": "citamāropayiṁ ahaṁ. ",
  "tha-ap48:2.1": "Āropite ca citake, ",
  "tha-ap48:2.2": "vehāsaṁ nabhamuggami; ",
  "tha-ap48:2.3": "Ākāse chadanaṁ katvā, ",
  "tha-ap48:2.4": "citakamhi adhārayi. ",
  "tha-ap48:3.1": "Ekanavutito kappe, ",
  "tha-ap48:3.2": "yaṁ pupphamabhiropayiṁ; ",
  "tha-ap48:3.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap48:3.4": "buddhapūjāyidaṁ phalaṁ. ",
  "tha-ap48:4.1": "Sattatālīsito kappe, ",
  "tha-ap48:4.2": "padumissaranāmako; ",
  "tha-ap48:4.3": "Cāturanto vijitāvī, ",
  "tha-ap48:4.4": "cakkavattī mahabbalo. ",
  "tha-ap48:5.1": "Paṭisambhidā catasso, ",
  "tha-ap48:5.2": "…pe… ",
  "tha-ap48:5.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap48:6.1": "Itthaṁ sudaṁ āyasmā padumacchadaniyo thero imā gāthāyo abhāsitthāti. ",
  "tha-ap48:7.1": "Padumacchadaniyattherassāpadānaṁ chaṭṭhaṁ. "
}