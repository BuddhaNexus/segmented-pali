{
"tha-ap213:1.1": "Therāpadāna",
"tha-ap213:2.1": "Hatthivagga",
"tha-ap213:3.1": "1. Hatthidāyakattheraapadāna",
"tha-ap213:4.1": "“Siddhatthassa bhagavato,",
"tha-ap213:4.2": "dvipadindassa tādino;",
"tha-ap213:4.3": "Nāgaseṭṭho mayā dinno,",
"tha-ap213:4.4": "īsādanto urūḷhavā.",
"tha-ap213:5.1": "Uttamatthaṃ anubhomi,",
"tha-ap213:5.2": "santipadamanuttaraṃ;",
"tha-ap213:5.3": "Nāgadānaṃ mayā dinnaṃ,",
"tha-ap213:5.4": "sabbalokahitesino.",
"tha-ap213:6.1": "Catunnavutito kappe,",
"tha-ap213:6.2": "yaṃ nāga madadiṃ tadā;",
"tha-ap213:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap213:6.4": "nāgadānassidaṃ phalaṃ.",
"tha-ap213:7.1": "Aṭṭhasattatikappamhi,",
"tha-ap213:7.2": "soḷasāsiṃsu khattiyā;",
"tha-ap213:7.3": "Samantapāsādikā nāma,",
"tha-ap213:7.4": "cakkavattī mahabbalā.",
"tha-ap213:8.1": "Paṭisambhidā catasso,",
"tha-ap213:8.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap213:8.3": "Chaḷabhiññā sacchikatā,",
"tha-ap213:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap213:9.1": "Itthaṃ sudaṃ āyasmā hatthidāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap213:10.1": "Hatthidāyakattherassāpadānaṃ paṭhamaṃ."
}