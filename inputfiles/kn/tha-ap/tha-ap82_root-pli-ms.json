{
"tha-ap82:1.1": "Therāpadāna",
"tha-ap82:2.1": "Nāgasamālavagga",
"tha-ap82:3.1": "10 Tipadumiyattheraapadāna",
"tha-ap82:4.1": "“Padumuttaro nāma jino,",
"tha-ap82:4.2": "sabbadhammāna pāragū;",
"tha-ap82:4.3": "Danto dantaparivuto,",
"tha-ap82:4.4": "nagarā nikkhamī tadā.",
"tha-ap82:5.1": "Nagare haṃsavatiyaṃ,",
"tha-ap82:5.2": "ahosiṃ māliko tadā;",
"tha-ap82:5.3": "Yaṃ tattha uttamaṃ tīṇi,",
"tha-ap82:5.4": "padmapupphāni aggahiṃ.",
"tha-ap82:6.1": "‘Addasaṃ virajaṃ buddhaṃ,",
"tha-ap82:6.2": "paṭimaggantarāpaṇe;",
"tha-ap82:6.3": "Saha disvāna sambuddhaṃ,",
"tha-ap82:6.4": "evaṃ cintesahaṃ tadā.",
"tha-ap82:7.1": "Kiṃ me imehi pupphehi,",
"tha-ap82:7.2": "rañño upanitehi me;",
"tha-ap82:7.3": "Gāmaṃ vā gāmakhettaṃ vā,",
"tha-ap82:7.4": "sahassaṃ vā labheyyahaṃ.",
"tha-ap82:8.1": "Adantadamanaṃ vīraṃ,",
"tha-ap82:8.2": "sabbasattasukhāvahaṃ;",
"tha-ap82:8.3": "Lokanāthaṃ pūjayitvā,",
"tha-ap82:8.4": "lacchāmi amataṃ dhanaṃ’.",
"tha-ap82:9.1": "Evāhaṃ cintayitvāna,",
"tha-ap82:9.2": "sakaṃ cittaṃ pasādayiṃ;",
"tha-ap82:9.3": "Tīṇi lohitake gayha,",
"tha-ap82:9.4": "ākāse ukkhipiṃ tadā.",
"tha-ap82:10.1": "Mayā ukkhittamattamhi,",
"tha-ap82:10.2": "ākāse patthariṃsu te;",
"tha-ap82:10.3": "Dhāriṃsu matthake tattha,",
"tha-ap82:10.4": "uddhaṃvaṇṭā adhomukhā.",
"tha-ap82:11.1": "Ye keci manujā disvā,",
"tha-ap82:11.2": "ukkuṭṭhiṃ sampavattayuṃ;",
"tha-ap82:11.3": "Devatā antalikkhamhi,",
"tha-ap82:11.4": "sādhukāraṃ pavattayuṃ.",
"tha-ap82:12.1": "Accheraṃ loke uppannaṃ,",
"tha-ap82:12.2": "buddhaseṭṭhassa vāhasā;",
"tha-ap82:12.3": "Sabbe dhammaṃ suṇissāma,",
"tha-ap82:12.4": "pupphānaṃ vāhasā mayaṃ.",
"tha-ap82:13.1": "Padumuttaro lokavidū,",
"tha-ap82:13.2": "āhutīnaṃ paṭiggaho;",
"tha-ap82:13.3": "Vīthiyañhi ṭhito santo,",
"tha-ap82:13.4": "imā gāthā abhāsatha.",
"tha-ap82:14.1": "‘Yo so buddhaṃ apūjesi,",
"tha-ap82:14.2": "rattapadmehi māṇavo;",
"tha-ap82:14.3": "Tamahaṃ kittayissāmi,",
"tha-ap82:14.4": "suṇātha mama bhāsato.",
"tha-ap82:15.1": "Tiṃsakappasahassāni,",
"tha-ap82:15.2": "devaloke ramissati;",
"tha-ap82:15.3": "Tiṃsakappāni devindo,",
"tha-ap82:15.4": "devarajjaṃ karissati.",
"tha-ap82:16.1": "Mahāvitthārikaṃ nāma,",
"tha-ap82:16.2": "byamhaṃ hessati tāvade;",
"tha-ap82:16.3": "Tiyojanasatubbiddhaṃ,",
"tha-ap82:16.4": "diyaḍḍhasatavitthataṃ.",
"tha-ap82:17.1": "Cattārisatasahassāni,",
"tha-ap82:17.2": "niyyūhā ca sumāpitā;",
"tha-ap82:17.3": "Kūṭāgāravarūpetā,",
"tha-ap82:17.4": "mahāsayanamaṇḍitā.",
"tha-ap82:18.1": "Koṭisatasahassiyo,",
"tha-ap82:18.2": "parivāressanti accharā;",
"tha-ap82:18.3": "Kusalā naccagītassa,",
"tha-ap82:18.4": "vāditepi padakkhiṇā.",
"tha-ap82:19.1": "Etādise byamhavare,",
"tha-ap82:19.2": "nārīgaṇasamākule;",
"tha-ap82:19.3": "Vassissati pupphavasso,",
"tha-ap82:19.4": "dibbo lohitako sadā.",
"tha-ap82:20.1": "Bhittikhīle nāgadante,",
"tha-ap82:20.2": "dvārabāhāya toraṇe;",
"tha-ap82:20.3": "Cakkamattā lohitakā,",
"tha-ap82:20.4": "olambissanti tāvade.",
"tha-ap82:21.1": "Pattena pattasañchanne,",
"tha-ap82:21.2": "antobyamhavare imaṃ;",
"tha-ap82:21.3": "Attharitvā pārupitvā,",
"tha-ap82:21.4": "tuvaṭṭissanti tāvade.",
"tha-ap82:22.1": "Bhavanaṃ parivāretvā,",
"tha-ap82:22.2": "samantā satayojane;",
"tha-ap82:22.3": "Tepi padmā lohitakā,",
"tha-ap82:22.4": "dibbagandhaṃ pavāyare.",
"tha-ap82:23.1": "Pañcasattatikkhattuñca,",
"tha-ap82:23.2": "cakkavattī bhavissati;",
"tha-ap82:23.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap82:23.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap82:24.1": "Sampattiyo duve bhutvā,",
"tha-ap82:24.2": "anīti anupaddavo;",
"tha-ap82:24.3": "Sampatte pariyosāne,",
"tha-ap82:24.4": "nibbānaṃ pāpuṇissati’.",
"tha-ap82:25.1": "Sudiṭṭho vata me buddho,",
"tha-ap82:25.2": "vāṇijjaṃ supayojitaṃ;",
"tha-ap82:25.3": "Padmāni tīṇi pūjetvā,",
"tha-ap82:25.4": "anubhosiṃ tisampadā.",
"tha-ap82:26.1": "Ajja me dhammappattassa,",
"tha-ap82:26.2": "vippamuttassa sabbaso;",
"tha-ap82:26.3": "Supupphitaṃ lohitakaṃ,",
"tha-ap82:26.4": "dhārayissati matthake.",
"tha-ap82:27.1": "Mama kammaṃ kathentassa,",
"tha-ap82:27.2": "padumuttarasatthuno;",
"tha-ap82:27.3": "Satapāṇasahassānaṃ,",
"tha-ap82:27.4": "dhammābhisamayo ahu.",
"tha-ap82:28.1": "Satasahassito kappe,",
"tha-ap82:28.2": "yaṃ buddhamabhipūjayiṃ;",
"tha-ap82:28.3": "Duggatiṃ nābhijānāmi,",
"tha-ap82:28.4": "tipadumānidaṃ phalaṃ.",
"tha-ap82:29.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap82:29.2": "bhavā sabbe samūhatā;",
"tha-ap82:29.3": "Sabbāsavā parikkhīṇā,",
"tha-ap82:29.4": "natthi dāni punabbhavo.",
"tha-ap82:30.1": "Paṭisambhidā catasso, … pe …",
"tha-ap82:30.4": "kataṃ buddhassa sāsanaṃ”. #1486",
"tha-ap82:31.1": "Itthaṃ sudaṃ āyasmā tipadumiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap82:32.1": "Tipadumiyattherassāpadānaṃ dasamaṃ.",
"tha-ap82:33.1": "Nāgasamālavaggo aṭṭhamo.",
"tha-ap82:34.1": "Tassuddānaṃ",
"tha-ap82:35.1": "Nāgasamālo padasaññī,",
"tha-ap82:35.2": "saññakāluvadāyako;",
"tha-ap82:35.3": "Ekasaññī tiṇasanthāro,",
"tha-ap82:35.4": "sūcipāṭalipupphiyo;",
"tha-ap82:35.5": "Ṭhitañjalī tipadumī,",
"tha-ap82:35.6": "gāthāyo pañcasattati."
}