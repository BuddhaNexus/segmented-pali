{
"tha-ap504:1.1": "Therāpadāna",
"tha-ap504:2.1": "Kaṇikāravagga",
"tha-ap504:3.1": "2. Ekapattadāyakattheraapadāna",
"tha-ap504:4.1": "“Nagare haṃsavatiyā,",
"tha-ap504:4.2": "kumbhakāro ahosahaṃ;",
"tha-ap504:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap504:4.4": "oghatiṇṇamanāsavaṃ.",
"tha-ap504:5.1": "Sukataṃ mattikāpattaṃ,",
"tha-ap504:5.2": "buddhaseṭṭhassadāsahaṃ;",
"tha-ap504:5.3": "Pattaṃ datvā bhagavato,",
"tha-ap504:5.4": "ujubhūtassa tādino.",
"tha-ap504:6.1": "Bhave nibbattamānohaṃ,",
"tha-ap504:6.2": "soṇṇathāle labhāmahaṃ;",
"tha-ap504:6.3": "Rūpimaye ca sovaṇṇe,",
"tha-ap504:6.4": "taṭṭike ca maṇīmaye.",
"tha-ap504:7.1": "Pātiyo paribhuñjāmi,",
"tha-ap504:7.2": "puññakammassidaṃ phalaṃ;",
"tha-ap504:7.3": "Yasānañca dhanānañca,",
"tha-ap504:7.4": "aggabhūto ca homahaṃ.",
"tha-ap504:8.1": "Yathāpi bhaddake khette,",
"tha-ap504:8.2": "bījaṃ appampi ropitaṃ;",
"tha-ap504:8.3": "Sammādhāraṃ pavecchante,",
"tha-ap504:8.4": "phalaṃ toseti kassakaṃ.",
"tha-ap504:9.1": "Tathevidaṃ pattadānaṃ,",
"tha-ap504:9.2": "buddhakhettamhi ropitaṃ;",
"tha-ap504:9.3": "Pītidhāre pavassante,",
"tha-ap504:9.4": "phalaṃ maṃ tosayissati.",
"tha-ap504:10.1": "Yāvatā khettā vijjanti,",
"tha-ap504:10.2": "saṃghāpi ca gaṇāpi ca;",
"tha-ap504:10.3": "Buddhakhettasamo natthi,",
"tha-ap504:10.4": "sukhado sabbapāṇinaṃ.",
"tha-ap504:11.1": "Namo te purisājañña,",
"tha-ap504:11.2": "namo te purisuttama;",
"tha-ap504:11.3": "Ekapattaṃ daditvāna,",
"tha-ap504:11.4": "pattomhi acalaṃ padaṃ.",
"tha-ap504:12.1": "Ekanavutito kappe,",
"tha-ap504:12.2": "yaṃ pattamadadiṃ tadā;",
"tha-ap504:12.3": "Duggatiṃ nābhijānāmi,",
"tha-ap504:12.4": "pattadānassidaṃ phalaṃ.",
"tha-ap504:13.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap504:13.4": "viharāmi anāsavo.",
"tha-ap504:14.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap504:14.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap504:15.1": "Paṭisambhidā catasso, … pe …",
"tha-ap504:15.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap504:16.1": "Itthaṃ sudaṃ āyasmā ekapattadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap504:17.1": "Ekapattadāyakattherassāpadānaṃ dutiyaṃ."
}