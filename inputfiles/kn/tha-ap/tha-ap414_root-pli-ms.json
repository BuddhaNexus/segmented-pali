{
"tha-ap414:1.1": "Therāpadāna",
"tha-ap414:2.1": "Bhaddālivagga",
"tha-ap414:3.1": "2. Ekachattiyattheraapadāna",
"tha-ap414:4.1": "“Candabhāgānadītīre,",
"tha-ap414:4.2": "assamo sukato mama;",
"tha-ap414:4.3": "Susuddhapulinākiṇṇo,",
"tha-ap414:4.4": "pannasālā sumāpitā.",
"tha-ap414:5.1": "Uttānakūlā nadikā,",
"tha-ap414:5.2": "supatitthā manoramā;",
"tha-ap414:5.3": "Macchakacchapasampannā,",
"tha-ap414:5.4": "susumāranisevitā.",
"tha-ap414:6.1": "Acchā dīpī ca mayūrā,",
"tha-ap414:6.2": "karavīkā ca sāḷikā;",
"tha-ap414:6.3": "Kūjanti sabbadā ete,",
"tha-ap414:6.4": "sobhayantā mamassamaṃ.",
"tha-ap414:7.1": "Kokilā mañjubhāṇī ca,",
"tha-ap414:7.2": "haṃsā ca madhurassarā;",
"tha-ap414:7.3": "Abhikūjanti te tattha,",
"tha-ap414:7.4": "sobhayantā mamassamaṃ.",
"tha-ap414:8.1": "Sīhā byagghā varāhā ca,",
"tha-ap414:8.2": "accha kokataracchakā;",
"tha-ap414:8.3": "Giriduggamhi nādenti,",
"tha-ap414:8.4": "sobhayantā mamassamaṃ.",
"tha-ap414:9.1": "Eṇīmigā ca sarabhā,",
"tha-ap414:9.2": "bheraṇḍā sūkarā bahū;",
"tha-ap414:9.3": "Giriduggamhi nādenti,",
"tha-ap414:9.4": "sobhayantā mamassamaṃ.",
"tha-ap414:10.1": "Uddālakā campakā ca,",
"tha-ap414:10.2": "pāṭalī sinduvārakā;",
"tha-ap414:10.3": "Atimuttā asokā ca,",
"tha-ap414:10.4": "sobhayanti mamassamaṃ.",
"tha-ap414:11.1": "Aṅkolā yūthikā ceva,",
"tha-ap414:11.2": "sattalī bimbijālikā;",
"tha-ap414:11.3": "Kaṇikārā ca pupphanti,",
"tha-ap414:11.4": "sobhayantā mamassamaṃ.",
"tha-ap414:12.1": "Nāgā sālā ca saḷalā,",
"tha-ap414:12.2": "puṇḍarīkettha pupphitā;",
"tha-ap414:12.3": "Dibbagandhaṃ sampavantā,",
"tha-ap414:12.4": "sobhayanti mamassamaṃ.",
"tha-ap414:13.1": "Ajjunā asanā cettha,",
"tha-ap414:13.2": "mahānāmā ca pupphitā;",
"tha-ap414:13.3": "Sālā ca kaṅgupupphā ca,",
"tha-ap414:13.4": "sobhayanti mamassamaṃ.",
"tha-ap414:14.1": "Ambā jambū ca tilakā,",
"tha-ap414:14.2": "nimbā ca sālakalyāṇī;",
"tha-ap414:14.3": "Dibbagandhaṃ sampavantā,",
"tha-ap414:14.4": "sobhayanti mamassamaṃ.",
"tha-ap414:15.1": "Asokā ca kapiṭṭhā ca,",
"tha-ap414:15.2": "girimālettha pupphitā;",
"tha-ap414:15.3": "Dibbagandhaṃ sampavantā,",
"tha-ap414:15.4": "sobhayanti mamassamaṃ.",
"tha-ap414:16.1": "Kadambā kadalī ceva,",
"tha-ap414:16.2": "isimuggā ca ropitā;",
"tha-ap414:16.3": "Dhuvaṃ phalāni dhārenti,",
"tha-ap414:16.4": "sobhayantā mamassamaṃ.",
"tha-ap414:17.1": "Harītakā āmalakā,",
"tha-ap414:17.2": "ambajambuvibhītakā;",
"tha-ap414:17.3": "Kolā bhallātakā billā,",
"tha-ap414:17.4": "phalino mama assame.",
"tha-ap414:18.1": "Avidūre pokkharaṇī,",
"tha-ap414:18.2": "supatitthā manoramā;",
"tha-ap414:18.3": "Mandālakehi sañchannā,",
"tha-ap414:18.4": "padumuppalakehi ca.",
"tha-ap414:19.1": "Gabbhaṃ gaṇhanti padumā,",
"tha-ap414:19.2": "aññe pupphanti kesarī;",
"tha-ap414:19.3": "Opattakaṇṇikā ceva,",
"tha-ap414:19.4": "pupphanti mama assame.",
"tha-ap414:20.1": "Pāṭhīnā pāvusā macchā,",
"tha-ap414:20.2": "balajā muñjarohitā;",
"tha-ap414:20.3": "Acchodakamhi vicaraṃ,",
"tha-ap414:20.4": "sobhayanti mamassamaṃ.",
"tha-ap414:21.1": "Nayitā ambagandhī ca,",
"tha-ap414:21.2": "anukūle ca ketakā;",
"tha-ap414:21.3": "Dibbagandhaṃ sampavantā,",
"tha-ap414:21.4": "sobhayanti mamassamaṃ.",
"tha-ap414:22.1": "Madhu bhisamhā savati,",
"tha-ap414:22.2": "khīrasappi muḷālibhi;",
"tha-ap414:22.3": "Dibbagandhaṃ sampavantā,",
"tha-ap414:22.4": "sobhayanti mamassamaṃ.",
"tha-ap414:23.1": "Pulinā sobhanā tattha,",
"tha-ap414:23.2": "ākiṇṇā jalasevitā;",
"tha-ap414:23.3": "Opupphā pupphitā senti,",
"tha-ap414:23.4": "sobhayantā mamassamaṃ.",
"tha-ap414:24.1": "Jaṭābhārena bharitā,",
"tha-ap414:24.2": "ajinuttaravāsanā;",
"tha-ap414:24.3": "Vākacīradharā sabbe,",
"tha-ap414:24.4": "sobhayanti mamassamaṃ.",
"tha-ap414:25.1": "Yugamattamapekkhantā,",
"tha-ap414:25.2": "nipakā santavuttino;",
"tha-ap414:25.3": "Kāmabhoge anapekkhā,",
"tha-ap414:25.4": "vasanti mama assame.",
"tha-ap414:26.1": "Parūḷhakacchanakhalomā,",
"tha-ap414:26.2": "paṅkadantā rajassirā;",
"tha-ap414:26.3": "Rajojalladharā sabbe,",
"tha-ap414:26.4": "vasanti mama assame.",
"tha-ap414:27.1": "Abhiññāpāramippattā,",
"tha-ap414:27.2": "antalikkhacarā ca te;",
"tha-ap414:27.3": "Uggacchantā nabhaṃ ete,",
"tha-ap414:27.4": "sobhayanti mamassamaṃ.",
"tha-ap414:28.1": "Tehi sissehi parivuto,",
"tha-ap414:28.2": "vasāmi vipine tadā;",
"tha-ap414:28.3": "Rattindivaṃ na jānāmi,",
"tha-ap414:28.4": "sadā jhānasamappito.",
"tha-ap414:29.1": "Bhagavā tamhi samaye,",
"tha-ap414:29.2": "atthadassī mahāmuni;",
"tha-ap414:29.3": "Tamandhakāraṃ nāsento,",
"tha-ap414:29.4": "uppajji lokanāyako.",
"tha-ap414:30.1": "Atha aññataro sisso,",
"tha-ap414:30.2": "āgacchi mama santikaṃ;",
"tha-ap414:30.3": "Mante ajjhetukāmo so,",
"tha-ap414:30.4": "chaḷaṅgaṃ nāma lakkhaṇaṃ.",
"tha-ap414:31.1": "Buddho loke samuppanno,",
"tha-ap414:31.2": "atthadassī mahāmuni;",
"tha-ap414:31.3": "Catusaccaṃ pakāsento,",
"tha-ap414:31.4": "deseti amataṃ padaṃ.",
"tha-ap414:32.1": "Tuṭṭhahaṭṭho pamudito,",
"tha-ap414:32.2": "dhammantaragatāsayo;",
"tha-ap414:32.3": "Assamā abhinikkhamma,",
"tha-ap414:32.4": "idaṃ vacanamabraviṃ.",
"tha-ap414:33.1": "‘Buddho loke samuppanno,",
"tha-ap414:33.2": "dvattiṃsavaralakkhaṇo;",
"tha-ap414:33.3": "Etha sabbe gamissāma,",
"tha-ap414:33.4": "sammāsambuddhasantikaṃ’.",
"tha-ap414:34.1": "Ovādapaṭikarā te,",
"tha-ap414:34.2": "sadhamme pāramiṃ gatā;",
"tha-ap414:34.3": "Sādhūti sampaṭicchiṃsu,",
"tha-ap414:34.4": "uttamatthagavesakā.",
"tha-ap414:35.1": "Jaṭābhārabharitā te,",
"tha-ap414:35.2": "ajinuttaravāsanā;",
"tha-ap414:35.3": "Uttamatthaṃ gavesantā,",
"tha-ap414:35.4": "nikkhamiṃsu vanā tadā.",
"tha-ap414:36.1": "Bhagavā tamhi samaye,",
"tha-ap414:36.2": "atthadassī mahāyaso;",
"tha-ap414:36.3": "Catusaccaṃ pakāsento,",
"tha-ap414:36.4": "deseti amataṃ padaṃ.",
"tha-ap414:37.1": "Setacchattaṃ gahetvāna,",
"tha-ap414:37.2": "buddhaseṭṭhassa dhārayiṃ;",
"tha-ap414:37.3": "Ekāhaṃ dhārayitvāna,",
"tha-ap414:37.4": "buddhaseṭṭhaṃ avandahaṃ.",
"tha-ap414:38.1": "Atthadassī tu bhagavā,",
"tha-ap414:38.2": "lokajeṭṭho narāsabho;",
"tha-ap414:38.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap414:38.4": "imā gāthā abhāsatha.",
"tha-ap414:39.1": "‘Yo me chattaṃ adhāresi,",
"tha-ap414:39.2": "pasanno sehi pāṇibhi;",
"tha-ap414:39.3": "Tamahaṃ kittayissāmi,",
"tha-ap414:39.4": "suṇātha mama bhāsato.",
"tha-ap414:40.1": "Imassa jāyamānassa,",
"tha-ap414:40.2": "devatte atha mānuse;",
"tha-ap414:40.3": "Dhāressati sadā chattaṃ,",
"tha-ap414:40.4": "chattadānassidaṃ phalaṃ.",
"tha-ap414:41.1": "Sattasattatikappāni,",
"tha-ap414:41.2": "devaloke ramissati;",
"tha-ap414:41.3": "Sahassakkhattuṃ rājā ca,",
"tha-ap414:41.4": "cakkavattī bhavissati.",
"tha-ap414:42.1": "Sattasattatikkhattuñca,",
"tha-ap414:42.2": "devarajjaṃ karissati;",
"tha-ap414:42.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap414:42.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap414:43.1": "Aṭṭhārase kappasate,",
"tha-ap414:43.2": "gotamo sakyapuṅgavo;",
"tha-ap414:43.3": "Tamandhakāraṃ nāsento,",
"tha-ap414:43.4": "uppajjissati cakkhumā.",
"tha-ap414:44.1": "Tassa dhammesu dāyādo,",
"tha-ap414:44.2": "oraso dhammanimmito;",
"tha-ap414:44.3": "Sabbāsave pariññāya,",
"tha-ap414:44.4": "viharissatināsavo’.",
"tha-ap414:45.1": "Yato ahaṃ kammamakaṃ,",
"tha-ap414:45.2": "chattaṃ buddhassa dhārayaṃ;",
"tha-ap414:45.3": "Etthantare na jānāmi,",
"tha-ap414:45.4": "setacchattaṃ adhāritaṃ.",
"tha-ap414:46.1": "Idaṃ pacchimakaṃ mayhaṃ,",
"tha-ap414:46.2": "carimo vattate bhavo;",
"tha-ap414:46.3": "Chattadhāraṇamajjāpi,",
"tha-ap414:46.4": "vattate niccakālikaṃ.",
"tha-ap414:47.1": "Aho me sukataṃ kammaṃ,",
"tha-ap414:47.2": "atthadassissa tādino;",
"tha-ap414:47.3": "Sabbāsavā parikkhīṇā,",
"tha-ap414:47.4": "natthi dāni punabbhavo.",
"tha-ap414:48.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap414:48.4": "viharāmi anāsavo.",
"tha-ap414:49.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap414:49.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap414:50.1": "Paṭisambhidā catasso, … pe …",
"tha-ap414:50.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap414:51.1": "Itthaṃ sudaṃ āyasmā ekachattiyo thero imā gāthāyo abhāsitthāti;",
"tha-ap414:52.1": "Ekachattiyattherassāpadānaṃ dutiyaṃ."
}