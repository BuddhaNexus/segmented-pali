{
"tha-ap15:1.1": "Therāpadāna",
"tha-ap15:2.1": "Sīhāsaniyavagga",
"tha-ap15:3.1": "3. Nandattheraapadāna",
"tha-ap15:4.1": "“Padumuttarassa bhagavato,",
"tha-ap15:4.2": "Lokajeṭṭhassa tādino;",
"tha-ap15:4.3": "Vatthaṃ khomaṃ mayā dinnaṃ,",
"tha-ap15:4.4": "Sayambhussa mahesino.",
"tha-ap15:5.1": "Taṃ me buddho viyākāsi,",
"tha-ap15:5.2": "jalajuttaranāmako;",
"tha-ap15:5.3": "‘Iminā vatthadānena,",
"tha-ap15:5.4": "hemavaṇṇo bhavissasi.",
"tha-ap15:6.1": "Dve sampattī anubhotvā,",
"tha-ap15:6.2": "kusalamūlehi codito;",
"tha-ap15:6.3": "Gotamassa bhagavato,",
"tha-ap15:6.4": "kaniṭṭho tvaṃ bhavissasi.",
"tha-ap15:7.1": "Rāgaratto sukhasīlo,",
"tha-ap15:7.2": "kāmesu gedhamāyuto;",
"tha-ap15:7.3": "Buddhena codito santo,",
"tha-ap15:7.4": "tadā tvaṃ pabbajissasi.",
"tha-ap15:8.1": "Pabbajitvāna tvaṃ tattha,",
"tha-ap15:8.2": "kusalamūlena codito;",
"tha-ap15:8.3": "Sabbāsave pariññāya,",
"tha-ap15:8.4": "nibbāyissasināsavo’.",
"tha-ap15:9.1": "Satta kappasahassamhi,",
"tha-ap15:9.2": "caturo ceḷanāmakā;",
"tha-ap15:9.3": "Saṭṭhi kappasahassamhi,",
"tha-ap15:9.4": "upacelā catujjanā.",
"tha-ap15:10.1": "Pañca kappasahassamhi,",
"tha-ap15:10.2": "ceḷāva caturo janā;",
"tha-ap15:10.3": "Sattaratanasampannā,",
"tha-ap15:10.4": "catudīpamhi issarā.",
"tha-ap15:11.1": "Paṭisambhidā catasso,",
"tha-ap15:11.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap15:11.3": "Chaḷabhiññā sacchikatā,",
"tha-ap15:11.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap15:12.1": "Itthaṃ sudaṃ āyasmā nando thero imā gāthāyo abhāsitthāti.",
"tha-ap15:13.1": "Nandattherassāpadānaṃ tatiyaṃ."
}