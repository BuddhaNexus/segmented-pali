{
"tha-ap14:1.1": "Therāpadāna",
"tha-ap14:2.1": "Sīhāsaniyavagga",
"tha-ap14:3.1": "2. Ekatthambhikattheraapadāna",
"tha-ap14:4.1": "“Siddhatthassa bhagavato,",
"tha-ap14:4.2": "mahāpūgagaṇo ahu;",
"tha-ap14:4.3": "Saraṇaṃ gatā ca te buddhaṃ,",
"tha-ap14:4.4": "saddahanti tathāgataṃ.",
"tha-ap14:5.1": "Sabbe saṅgamma mantetvā,",
"tha-ap14:5.2": "māḷaṃ kubbanti satthuno;",
"tha-ap14:5.3": "Ekatthambhaṃ alabhantā,",
"tha-ap14:5.4": "vicinanti brahāvane.",
"tha-ap14:6.1": "Tehaṃ araññe disvāna,",
"tha-ap14:6.2": "upagamma gaṇaṃ tadā;",
"tha-ap14:6.3": "Añjaliṃ paggahetvāna,",
"tha-ap14:6.4": "paripucchiṃ gaṇaṃ ahaṃ.",
"tha-ap14:7.1": "Te me puṭṭhā viyākaṃsu,",
"tha-ap14:7.2": "sīlavanto upāsakā;",
"tha-ap14:7.3": "Māḷaṃ mayaṃ kattukāmā,",
"tha-ap14:7.4": "ekatthambho na labbhati.",
"tha-ap14:8.1": "Ekatthambhaṃ mamaṃ detha,",
"tha-ap14:8.2": "ahaṃ dassāmi satthuno;",
"tha-ap14:8.3": "Āharissāmahaṃ thambhaṃ,",
"tha-ap14:8.4": "appossukkā bhavantu te.",
"tha-ap14:9.1": "Te me thambhaṃ pavecchiṃsu,",
"tha-ap14:9.2": "pasannā tuṭṭhamānasā;",
"tha-ap14:9.3": "Tato paṭinivattitvā,",
"tha-ap14:9.4": "agamaṃsu sakaṃ gharaṃ.",
"tha-ap14:10.1": "Aciraṃ gate pūgagaṇe,",
"tha-ap14:10.2": "thambhaṃ ahāsahaṃ tadā;",
"tha-ap14:10.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap14:10.4": "paṭhamaṃ ussapesahaṃ.",
"tha-ap14:11.1": "Tena cittappasādena,",
"tha-ap14:11.2": "Vimānaṃ upapajjahaṃ;",
"tha-ap14:11.3": "Ubbiddhaṃ bhavanaṃ mayhaṃ,",
"tha-ap14:11.4": "Sattabhūmaṃ samuggataṃ.",
"tha-ap14:12.1": "Vajjamānāsu bherīsu,",
"tha-ap14:12.2": "paricāremahaṃ sadā;",
"tha-ap14:12.3": "Pañcapaññāsakappamhi,",
"tha-ap14:12.4": "rājā āsiṃ yasodharo.",
"tha-ap14:13.1": "Tatthāpi bhavanaṃ mayhaṃ,",
"tha-ap14:13.2": "sattabhūmaṃ samuggataṃ;",
"tha-ap14:13.3": "Kūṭāgāravarūpetaṃ,",
"tha-ap14:13.4": "ekatthambhaṃ manoramaṃ.",
"tha-ap14:14.1": "Ekavīsatikappamhi,",
"tha-ap14:14.2": "udeno nāma khattiyo;",
"tha-ap14:14.3": "Tatrāpi bhavanaṃ mayhaṃ,",
"tha-ap14:14.4": "sattabhūmaṃ samuggataṃ.",
"tha-ap14:15.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap14:15.2": "devattaṃ atha mānusaṃ;",
"tha-ap14:15.3": "Anubhomi sukhaṃ sabbaṃ,",
"tha-ap14:15.4": "ekatthambhassidaṃ phalaṃ.",
"tha-ap14:16.1": "Catunnavutito kappe,",
"tha-ap14:16.2": "yaṃ thambhamadadaṃ tadā;",
"tha-ap14:16.3": "Duggatiṃ nābhijānāmi,",
"tha-ap14:16.4": "ekatthambhassidaṃ phalaṃ.",
"tha-ap14:17.1": "Paṭisambhidā catasso,",
"tha-ap14:17.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap14:17.3": "Chaḷabhiññā sacchikatā,",
"tha-ap14:17.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap14:18.1": "Itthaṃ sudaṃ āyasmā ekatthambhiko thero imā gāthāyo abhāsitthāti.",
"tha-ap14:19.1": "Ekatthambhikattherassāpadānaṃ dutiyaṃ."
}