{
"tha-ap430:1.1": "Therāpadāna",
"tha-ap430:2.1": "Sakiṃsammajjakavagga",
"tha-ap430:3.1": "8. Sucintitattheraapadāna",
"tha-ap430:4.1": "“Nagare haṃsavatiyā,",
"tha-ap430:4.2": "ahosiṃ kassako tadā;",
"tha-ap430:4.3": "Kasikammena jīvāmi,",
"tha-ap430:4.4": "tena posemi dārake.",
"tha-ap430:5.1": "Susampannaṃ tadā khettaṃ,",
"tha-ap430:5.2": "Dhaññaṃ me phalinaṃ ahu;",
"tha-ap430:5.3": "Pākakāle ca sampatte,",
"tha-ap430:5.4": "Evaṃ cintesahaṃ tadā.",
"tha-ap430:6.1": "Nacchannaṃ nappatirūpaṃ,",
"tha-ap430:6.2": "jānantassa guṇāguṇaṃ;",
"tha-ap430:6.3": "Yohaṃ saṃghe adatvāna,",
"tha-ap430:6.4": "aggaṃ bhuñjeyya ce tadā.",
"tha-ap430:7.1": "Ayaṃ buddho asamasamo,",
"tha-ap430:7.2": "dvattiṃsavaralakkhaṇo;",
"tha-ap430:7.3": "Tato pabhāvito saṃgho,",
"tha-ap430:7.4": "puññakkhetto anuttaro.",
"tha-ap430:8.1": "Tattha dassāmahaṃ dānaṃ,",
"tha-ap430:8.2": "navasassaṃ pure pure;",
"tha-ap430:8.3": "Evāhaṃ cintayitvāna,",
"tha-ap430:8.4": "haṭṭho pīṇitamānaso.",
"tha-ap430:9.1": "Khettato dhaññamāhatvā,",
"tha-ap430:9.2": "sambuddhaṃ upasaṅkamiṃ;",
"tha-ap430:9.3": "Upasaṅkamma sambuddhaṃ,",
"tha-ap430:9.4": "lokajeṭṭhaṃ narāsabhaṃ;",
"tha-ap430:9.5": "Vanditvā satthuno pāde,",
"tha-ap430:9.6": "idaṃ vacanamabraviṃ.",
"tha-ap430:10.1": "‘Navasassañca sampannaṃ,",
"tha-ap430:10.2": "āyāgosi ca tvaṃ mune;",
"tha-ap430:10.3": "Anukampamupādāya,",
"tha-ap430:10.4": "adhivāsehi cakkhuma’.",
"tha-ap430:11.1": "Padumuttaro lokavidū,",
"tha-ap430:11.2": "āhutīnaṃ paṭiggaho;",
"tha-ap430:11.3": "Mama saṅkappamaññāya,",
"tha-ap430:11.4": "idaṃ vacanamabravi.",
"tha-ap430:12.1": "‘Cattāro ca paṭipannā,",
"tha-ap430:12.2": "cattāro ca phale ṭhitā;",
"tha-ap430:12.3": "Esa saṃgho ujubhūto,",
"tha-ap430:12.4": "paññāsīlasamāhito;",
"tha-ap430:12.5": "Yajantānaṃ manussānaṃ,",
"tha-ap430:12.6": "puññapekkhāna pāṇinaṃ.",
"tha-ap430:13.1": "Karotopadhikaṃ puññaṃ,",
"tha-ap430:13.2": "saṃghe dinnaṃ mahapphalaṃ;",
"tha-ap430:13.3": "Tasmiṃ saṃgheva dātabbaṃ,",
"tha-ap430:13.4": "tava sassaṃ tathetaraṃ.",
"tha-ap430:14.1": "Saṃghato uddisitvāna,",
"tha-ap430:14.2": "bhikkhū netvāna saṃgharaṃ;",
"tha-ap430:14.3": "Paṭiyattaṃ ghare santaṃ,",
"tha-ap430:14.4": "bhikkhusaṃghassa dehi tvaṃ’.",
"tha-ap430:15.1": "Saṃghato uddisitvāna,",
"tha-ap430:15.2": "bhikkhū netvāna saṃgharaṃ;",
"tha-ap430:15.3": "Yaṃ ghare paṭiyattaṃ me,",
"tha-ap430:15.4": "bhikkhusaṃghassadāsahaṃ.",
"tha-ap430:16.1": "Tena kammena sukatena,",
"tha-ap430:16.2": "cetanāpaṇidhīhi ca;",
"tha-ap430:16.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap430:16.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap430:17.1": "Tattha me sukataṃ byamhaṃ,",
"tha-ap430:17.2": "sovaṇṇaṃ sappabhassaraṃ;",
"tha-ap430:17.3": "Saṭṭhiyojanamubbedhaṃ,",
"tha-ap430:17.4": "tiṃsayojanavitthataṃ.",
"tha-ap430:18.1": "Ekūnavīsatimaṃ bhāṇavāraṃ.",
"tha-ap430:19.1": "Ākiṇṇaṃ bhavanaṃ mayhaṃ,",
"tha-ap430:19.2": "nārīgaṇasamākulaṃ;",
"tha-ap430:19.3": "Tattha bhutvā pivitvā ca,",
"tha-ap430:19.4": "vasāmi tidase ahaṃ.",
"tha-ap430:20.1": "Satānaṃ tīṇikkhattuñca,",
"tha-ap430:20.2": "devarajjamakārayiṃ;",
"tha-ap430:20.3": "Satānaṃ pañcakkhattuñca,",
"tha-ap430:20.4": "cakkavattī ahosahaṃ;",
"tha-ap430:20.5": "Padesarajjaṃ vipulaṃ,",
"tha-ap430:20.6": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap430:21.1": "Bhavābhave saṃsaranto,",
"tha-ap430:21.2": "labhāmi amitaṃ dhanaṃ;",
"tha-ap430:21.3": "Bhoge me ūnatā natthi,",
"tha-ap430:21.4": "navasassassidaṃ phalaṃ.",
"tha-ap430:22.1": "Hatthiyānaṃ assayānaṃ,",
"tha-ap430:22.2": "sivikaṃ sandamānikaṃ;",
"tha-ap430:22.3": "Labhāmi sabbamevetaṃ,",
"tha-ap430:22.4": "navasassassidaṃ phalaṃ.",
"tha-ap430:23.1": "Navavatthaṃ navaphalaṃ,",
"tha-ap430:23.2": "navaggarasabhojanaṃ;",
"tha-ap430:23.3": "Labhāmi sabbamevetaṃ,",
"tha-ap430:23.4": "navasassassidaṃ phalaṃ.",
"tha-ap430:24.1": "Koseyyakambaliyāni,",
"tha-ap430:24.2": "khomakappāsikāni ca;",
"tha-ap430:24.3": "Labhāmi sabbamevetaṃ,",
"tha-ap430:24.4": "navasassassidaṃ phalaṃ.",
"tha-ap430:25.1": "Dāsīgaṇaṃ dāsagaṇaṃ,",
"tha-ap430:25.2": "nāriyo ca alaṅkatā;",
"tha-ap430:25.3": "Labhāmi sabbamevetaṃ,",
"tha-ap430:25.4": "navasassassidaṃ phalaṃ.",
"tha-ap430:26.1": "Na maṃ sītaṃ vā uṇhaṃ vā,",
"tha-ap430:26.2": "pariḷāho na vijjati;",
"tha-ap430:26.3": "Atho cetasikaṃ dukkhaṃ,",
"tha-ap430:26.4": "hadaye me na vijjati.",
"tha-ap430:27.1": "Idaṃ khāda idaṃ bhuñja,",
"tha-ap430:27.2": "imamhi sayane saya;",
"tha-ap430:27.3": "Labhāmi sabbamevetaṃ,",
"tha-ap430:27.4": "navasassassidaṃ phalaṃ.",
"tha-ap430:28.1": "Ayaṃ pacchimako dāni,",
"tha-ap430:28.2": "carimo vattate bhavo;",
"tha-ap430:28.3": "Ajjāpi deyyadhammo me,",
"tha-ap430:28.4": "phalaṃ tosesi sabbadā.",
"tha-ap430:29.1": "Navasassaṃ daditvāna,",
"tha-ap430:29.2": "saṃghe gaṇavaruttame;",
"tha-ap430:29.3": "Aṭṭhānisaṃse anubhomi,",
"tha-ap430:29.4": "kammānucchavike mama.",
"tha-ap430:30.1": "Vaṇṇavā yasavā homi,",
"tha-ap430:30.2": "mahābhogo anītiko;",
"tha-ap430:30.3": "Mahāpakkho sadā homi,",
"tha-ap430:30.4": "abhejjapariso sadā.",
"tha-ap430:31.1": "Sabbe maṃ apacāyanti,",
"tha-ap430:31.2": "ye keci pathavissitā;",
"tha-ap430:31.3": "Deyyadhammā ca ye keci,",
"tha-ap430:31.4": "pure pure labhāmahaṃ.",
"tha-ap430:32.1": "Bhikkhusaṃghassa vā majjhe,",
"tha-ap430:32.2": "buddhaseṭṭhassa sammukhā;",
"tha-ap430:32.3": "Sabbepi samatikkamma,",
"tha-ap430:32.4": "denti mameva dāyakā.",
"tha-ap430:33.1": "Paṭhamaṃ navasassañhi,",
"tha-ap430:33.2": "datvā saṃghe gaṇuttame;",
"tha-ap430:33.3": "Imānisaṃse anubhomi,",
"tha-ap430:33.4": "navasassassidaṃ phalaṃ.",
"tha-ap430:34.1": "Satasahassito kappe,",
"tha-ap430:34.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap430:34.3": "Duggatiṃ nābhijānāmi,",
"tha-ap430:34.4": "navasassassidaṃ phalaṃ.",
"tha-ap430:35.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap430:35.4": "viharāmi anāsavo.",
"tha-ap430:36.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap430:36.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap430:37.1": "Paṭisambhidā catasso, … pe …",
"tha-ap430:37.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap430:38.1": "Itthaṃ sudaṃ āyasmā sucintito thero imā gāthāyo abhāsitthāti.",
"tha-ap430:39.1": "Sucintitattherassāpadānaṃ aṭṭhamaṃ."
}