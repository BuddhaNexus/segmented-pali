{
"tha-ap332:1.1": "Therāpadāna",
"tha-ap332:2.1": "Umāpupphiyavagga",
"tha-ap332:3.1": "10. Saparivārachattadāyakattheraapadāna",
"tha-ap332:4.1": "“Padumuttaro lokavidū,",
"tha-ap332:4.2": "āhutīnaṃ paṭiggaho;",
"tha-ap332:4.3": "Ākāse jalavuṭṭhīva,",
"tha-ap332:4.4": "vassate dhammavuṭṭhiyā.",
"tha-ap332:5.1": "Tamaddasāsiṃ sambuddhaṃ,",
"tha-ap332:5.2": "desentaṃ amataṃ padaṃ;",
"tha-ap332:5.3": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap332:5.4": "agamāsiṃ sakaṃ gharaṃ.",
"tha-ap332:6.1": "Chattaṃ alaṅkataṃ gayha,",
"tha-ap332:6.2": "upagacchiṃ naruttamaṃ;",
"tha-ap332:6.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap332:6.4": "ākāse ukkhipiṃ ahaṃ.",
"tha-ap332:7.1": "Susaṅgahitayānaṃva,",
"tha-ap332:7.2": "dantova sāvakuttamo;",
"tha-ap332:7.3": "Upagantvāna sambuddhaṃ,",
"tha-ap332:7.4": "matthake sampatiṭṭhahi.",
"tha-ap332:8.1": "Anukampako kāruṇiko,",
"tha-ap332:8.2": "buddho lokagganāyako;",
"tha-ap332:8.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap332:8.4": "imā gāthā abhāsatha.",
"tha-ap332:9.1": "‘Yena chattamidaṃ dinnaṃ,",
"tha-ap332:9.2": "alaṅkataṃ manoramaṃ;",
"tha-ap332:9.3": "Tena cittappasādena,",
"tha-ap332:9.4": "duggatiṃ so na gacchati.",
"tha-ap332:10.1": "Sattakkhattuñca devesu,",
"tha-ap332:10.2": "devarajjaṃ karissati;",
"tha-ap332:10.3": "Bāttiṃsakkhattuñca rājā,",
"tha-ap332:10.4": "cakkavattī bhavissati.",
"tha-ap332:11.1": "Kappasatasahassamhi,",
"tha-ap332:11.2": "okkākakulasambhavo;",
"tha-ap332:11.3": "Gotamo nāma gottena,",
"tha-ap332:11.4": "satthā loke bhavissati.",
"tha-ap332:12.1": "Tassa dhammesu dāyādo,",
"tha-ap332:12.2": "oraso dhammanimmito;",
"tha-ap332:12.3": "Sabbāsave pariññāya,",
"tha-ap332:12.4": "nibbāyissatināsavo’.",
"tha-ap332:13.1": "Buddhassa giramaññāya,",
"tha-ap332:13.2": "vācāsabhimudīritaṃ;",
"tha-ap332:13.3": "Pasannacitto sumano,",
"tha-ap332:13.4": "bhiyyo hāsaṃ janesahaṃ.",
"tha-ap332:14.1": "Jahitvā mānusaṃ yoniṃ,",
"tha-ap332:14.2": "Dibbaṃ yoniṃ samajjhagaṃ;",
"tha-ap332:14.3": "Vimānamuttamaṃ mayhaṃ,",
"tha-ap332:14.4": "Abbhuggataṃ manoramaṃ.",
"tha-ap332:15.1": "Vimānā nikkhamantassa,",
"tha-ap332:15.2": "setacchattaṃ dharīyati;",
"tha-ap332:15.3": "Tadā saññaṃ paṭilabhiṃ,",
"tha-ap332:15.4": "pubbakammassidaṃ phalaṃ.",
"tha-ap332:16.1": "Devalokā cavitvāna,",
"tha-ap332:16.2": "manussattañca āgamiṃ;",
"tha-ap332:16.3": "Chattiṃsakkhattuṃ cakkavattī,",
"tha-ap332:16.4": "sattakappasatamhito.",
"tha-ap332:17.1": "Tamhā kāyā cavitvāna,",
"tha-ap332:17.2": "āgacchiṃ tidasaṃ puraṃ;",
"tha-ap332:17.3": "Saṃsaritvānupubbena,",
"tha-ap332:17.4": "mānusaṃ punarāgamiṃ.",
"tha-ap332:18.1": "Okkantaṃ mātukucchiṃ maṃ,",
"tha-ap332:18.2": "setacchattaṃ adhārayuṃ;",
"tha-ap332:18.3": "Jātiyā sattavassohaṃ,",
"tha-ap332:18.4": "pabbajiṃ anagāriyaṃ.",
"tha-ap332:19.1": "Sunando nāma nāmena,",
"tha-ap332:19.2": "brāhmaṇo mantapāragū;",
"tha-ap332:19.3": "Phalikaṃ chattamādāya,",
"tha-ap332:19.4": "sāvakaggassa so tadā.",
"tha-ap332:20.1": "Anumodi mahāvīro,",
"tha-ap332:20.2": "sāriputto mahākathī;",
"tha-ap332:20.3": "Sutvānumodanaṃ tassa,",
"tha-ap332:20.4": "pubbakammamanussariṃ.",
"tha-ap332:21.1": "Añjaliṃ paggahetvāna,",
"tha-ap332:21.2": "sakaṃ cittaṃ pasādayiṃ;",
"tha-ap332:21.3": "Saritvā purimaṃ kammaṃ,",
"tha-ap332:21.4": "arahattamapāpuṇiṃ.",
"tha-ap332:22.1": "Uṭṭhāya āsanā tamhā,",
"tha-ap332:22.2": "sire katvāna añjaliṃ;",
"tha-ap332:22.3": "Sambuddhaṃ abhivādetvā,",
"tha-ap332:22.4": "imaṃ vācaṃ udīrayiṃ.",
"tha-ap332:23.1": "Satasahassito kappe,",
"tha-ap332:23.2": "buddho loke anuttaro;",
"tha-ap332:23.3": "Padumuttaro lokavidū,",
"tha-ap332:23.4": "āhutīnaṃ paṭiggaho.",
"tha-ap332:24.1": "Tassa chattaṃ mayā dinnaṃ,",
"tha-ap332:24.2": "vicittaṃ samalaṅkataṃ;",
"tha-ap332:24.3": "Ubho hatthehi paggaṇhi,",
"tha-ap332:24.4": "sayambhū aggapuggalo.",
"tha-ap332:25.1": "Aho buddhā aho dhammā,",
"tha-ap332:25.2": "aho no satthusampadā;",
"tha-ap332:25.3": "Ekacchattassa dānena,",
"tha-ap332:25.4": "duggatiṃ nupapajjahaṃ.",
"tha-ap332:26.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap332:26.2": "bhavā sabbe samūhatā;",
"tha-ap332:26.3": "Sabbāsave pariññāya,",
"tha-ap332:26.4": "viharāmi anāsavo.",
"tha-ap332:27.1": "Paṭisambhidā catasso, … pe …",
"tha-ap332:27.4": "kataṃ buddhassa sāsanaṃ”. #2925",
"tha-ap332:28.1": "Itthaṃ sudaṃ āyasmā saparivārachattadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap332:29.1": "Saparivārachattadāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap332:30.1": "Umāpupphiyavaggo tettiṃsatimo.",
"tha-ap332:31.1": "Tassuddānaṃ",
"tha-ap332:32.1": "Umāpupphañca pulinaṃ,",
"tha-ap332:32.2": "hāso yañño nimittako;",
"tha-ap332:32.3": "Saṃsāvako nigguṇḍī ca,",
"tha-ap332:32.4": "sumanaṃ pupphachattako;",
"tha-ap332:32.5": "Saparivārachatto ca,",
"tha-ap332:32.6": "gāthā sattasatuttarāti."
}