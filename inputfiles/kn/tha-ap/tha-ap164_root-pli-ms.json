{
"tha-ap164:1.1": "Therāpadāna",
"tha-ap164:2.1": "Supāricariyavagga",
"tha-ap164:3.1": "2. Kaṇaverapupphiyattheraapadāna",
"tha-ap164:4.1": "“Siddhattho nāma bhagavā,",
"tha-ap164:4.2": "lokajeṭṭho narāsabho;",
"tha-ap164:4.3": "Purakkhato sāvakehi,",
"tha-ap164:4.4": "nagaraṃ paṭipajjatha.",
"tha-ap164:5.1": "Rañño antepure āsiṃ,",
"tha-ap164:5.2": "gopako abhisammato;",
"tha-ap164:5.3": "Pāsāde upaviṭṭhohaṃ,",
"tha-ap164:5.4": "addasaṃ lokanāyakaṃ.",
"tha-ap164:6.1": "Kaṇaveraṃ gahetvāna,",
"tha-ap164:6.2": "bhikkhusaṃghe samokiriṃ;",
"tha-ap164:6.3": "Buddhassa visuṃ katvāna,",
"tha-ap164:6.4": "tato bhiyyo samokiriṃ.",
"tha-ap164:7.1": "Catunnavutito kappe,",
"tha-ap164:7.2": "Yaṃ pupphamabhipūjayiṃ;",
"tha-ap164:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap164:7.4": "Buddhapūjāyidaṃ phalaṃ.",
"tha-ap164:8.1": "Sattāsītimhito kappe,",
"tha-ap164:8.2": "caturāsuṃ mahiddhikā;",
"tha-ap164:8.3": "Sattaratanasampannā,",
"tha-ap164:8.4": "cakkavattī mahabbalā.",
"tha-ap164:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap164:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap164:10.1": "Itthaṃ sudaṃ āyasmā kaṇaverapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap164:11.1": "Kaṇaverapupphiyattherassāpadānaṃ dutiyaṃ."
}