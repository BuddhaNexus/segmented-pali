{
"tha-ap493:1.1": "Therāpadāna",
"tha-ap493:2.1": "Kiṅkaṇipupphavagga",
"tha-ap493:3.1": "1. Tikiṅkaṇipupphiyattheraapadāna",
"tha-ap493:4.1": "“Kaṇikāraṃva jotantaṃ,",
"tha-ap493:4.2": "nisinnaṃ pabbatantare;",
"tha-ap493:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap493:4.4": "vipassiṃ lokanāyakaṃ.",
"tha-ap493:5.1": "Tīṇi kiṅkaṇipupphāni,",
"tha-ap493:5.2": "paggayha abhiropayiṃ;",
"tha-ap493:5.3": "Sambuddhamabhipūjetvā,",
"tha-ap493:5.4": "gacchāmi dakkhiṇāmukho.",
"tha-ap493:6.1": "Tena kammena sukatena,",
"tha-ap493:6.2": "cetanāpaṇidhīhi ca;",
"tha-ap493:6.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap493:6.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap493:7.1": "Ekanavutito kappe,",
"tha-ap493:7.2": "yaṃ buddhamabhipūjayiṃ;",
"tha-ap493:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap493:7.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap493:8.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap493:8.2": "bhavā sabbe samūhatā;",
"tha-ap493:8.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap493:8.4": "viharāmi anāsavo.",
"tha-ap493:9.1": "Svāgataṃ vata me āsi,",
"tha-ap493:9.2": "mama buddhassa santike;",
"tha-ap493:9.3": "Tisso vijjā anuppattā,",
"tha-ap493:9.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap493:10.1": "Paṭisambhidā catasso,",
"tha-ap493:10.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap493:10.3": "Chaḷabhiññā sacchikatā,",
"tha-ap493:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap493:11.1": "Itthaṃ sudaṃ āyasmā tikiṅkaṇipupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap493:12.1": "Tikiṅkaṇipupphiyattherassāpadānaṃ paṭhamaṃ."
}