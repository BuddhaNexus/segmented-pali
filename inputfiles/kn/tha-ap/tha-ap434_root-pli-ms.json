{
"tha-ap434:1.1": "Therāpadāna",
"tha-ap434:2.1": "Ekavihārivagga",
"tha-ap434:3.1": "2. Ekasaṅkhiyattheraapadāna",
"tha-ap434:4.1": "“Vipassino bhagavato,",
"tha-ap434:4.2": "mahābodhimaho ahu;",
"tha-ap434:4.3": "Mahājanā samāgamma,",
"tha-ap434:4.4": "pūjenti bodhimuttamaṃ.",
"tha-ap434:5.1": "Na hi taṃ orakaṃ maññe,",
"tha-ap434:5.2": "buddhaseṭṭho bhavissati;",
"tha-ap434:5.3": "Yassāyaṃ īdisā bodhi,",
"tha-ap434:5.4": "pūjanīyā ca satthuno.",
"tha-ap434:6.1": "Tato saṅkhaṃ gahetvāna,",
"tha-ap434:6.2": "bodhirukkhamupaṭṭhahiṃ;",
"tha-ap434:6.3": "Dhamanto sabbadivasaṃ,",
"tha-ap434:6.4": "avandiṃ bodhimuttamaṃ.",
"tha-ap434:7.1": "Āsannake kataṃ kammaṃ,",
"tha-ap434:7.2": "devalokaṃ apāpayī;",
"tha-ap434:7.3": "Kaḷevaraṃ me patitaṃ,",
"tha-ap434:7.4": "devaloke ramāmahaṃ.",
"tha-ap434:8.1": "Saṭṭhituriyasahassāni,",
"tha-ap434:8.2": "tuṭṭhahaṭṭhā pamoditā;",
"tha-ap434:8.3": "Sadā mayhaṃ upaṭṭhanti,",
"tha-ap434:8.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap434:9.1": "Ekasattatime kappe,",
"tha-ap434:9.2": "rājā āsiṃ sudassano;",
"tha-ap434:9.3": "Cāturanto vijitāvī,",
"tha-ap434:9.4": "jambumaṇḍassa issaro.",
"tha-ap434:10.1": "Tato aṅgasatā turiyā,",
"tha-ap434:10.2": "parivārenti maṃ sadā;",
"tha-ap434:10.3": "Anubhomi sakaṃ kammaṃ,",
"tha-ap434:10.4": "upaṭṭhānassidaṃ phalaṃ.",
"tha-ap434:11.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap434:11.2": "devattaṃ atha mānusaṃ;",
"tha-ap434:11.3": "Mātukucchigatassāpi,",
"tha-ap434:11.4": "vajjare bheriyo sadā.",
"tha-ap434:12.1": "Upaṭṭhitvāna sambuddhaṃ,",
"tha-ap434:12.2": "anubhutvāna sampadā;",
"tha-ap434:12.3": "Sivaṃ sukhemaṃ amataṃ,",
"tha-ap434:12.4": "pattomhi acalaṃ padaṃ.",
"tha-ap434:13.1": "Ekanavutito kappe,",
"tha-ap434:13.2": "yaṃ kammamakariṃ tadā;",
"tha-ap434:13.3": "Duggatiṃ nābhijānāmi,",
"tha-ap434:13.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap434:14.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap434:14.4": "viharāmi anāsavo.",
"tha-ap434:15.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap434:15.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap434:16.1": "Paṭisambhidā catasso, … pe …",
"tha-ap434:16.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap434:17.1": "Itthaṃ sudaṃ āyasmā ekasaṅkhiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap434:18.1": "Ekasaṅkhiyattherassāpadānaṃ dutiyaṃ."
}