{
"tha-ap162:1.1": "Therāpadāna",
"tha-ap162:2.1": "Bandhujīvakavagga",
"tha-ap162:3.1": "10. Kumudadāyakattheraapadāna",
"tha-ap162:4.1": "“Himavantassāvidūre,",
"tha-ap162:4.2": "mahājātassaro ahu;",
"tha-ap162:4.3": "Padumuppalasañchanno,",
"tha-ap162:4.4": "puṇḍarīkasamotthaṭo.",
"tha-ap162:5.1": "Kukuttho nāma nāmena,",
"tha-ap162:5.2": "tatthāsiṃ sakuṇo tadā;",
"tha-ap162:5.3": "Sīlavā buddhisampanno,",
"tha-ap162:5.4": "puññāpuññesu kovido.",
"tha-ap162:6.1": "Padumuttaro lokavidū,",
"tha-ap162:6.2": "āhutīnaṃ paṭiggaho;",
"tha-ap162:6.3": "Jātassarassāvidūre,",
"tha-ap162:6.4": "sañcarittha mahāmuni.",
"tha-ap162:7.1": "Jalajaṃ kumudaṃ chetvā,",
"tha-ap162:7.2": "upanesiṃ mahesino;",
"tha-ap162:7.3": "Mama saṅkappamaññāya,",
"tha-ap162:7.4": "paṭiggahi mahāmuni.",
"tha-ap162:8.1": "Tañca dānaṃ daditvāna,",
"tha-ap162:8.2": "sukkamūlena codito;",
"tha-ap162:8.3": "Kappānaṃ satasahassaṃ,",
"tha-ap162:8.4": "duggatiṃ nupapajjahaṃ.",
"tha-ap162:9.1": "Soḷaseto kappasate,",
"tha-ap162:9.2": "āsuṃ varuṇanāmakā;",
"tha-ap162:9.3": "Aṭṭha ete janādhipā,",
"tha-ap162:9.4": "cakkavattī mahabbalā.",
"tha-ap162:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap162:10.4": "kataṃ buddhassa sāsanaṃ”. #2044",
"tha-ap162:11.1": "Itthaṃ sudaṃ āyasmā kumudadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap162:12.1": "Kumudadāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap162:13.1": "Bandhujīvakavaggo soḷasamo.",
"tha-ap162:14.1": "Tassuddānaṃ",
"tha-ap162:15.1": "Bandhujīvo tambapupphī,",
"tha-ap162:15.2": "vīthikakkārupupphiyo;",
"tha-ap162:15.3": "Mandāravo kadambī ca,",
"tha-ap162:15.4": "sūlako nāgapupphiyo;",
"tha-ap162:15.5": "Punnāgo komudī gāthā,",
"tha-ap162:15.6": "chappaññāsa pakittitāti."
}