{
  "tha-ap135:0.1": "Therāpadāna ",
  "tha-ap135:0.2": "Sobhitavagga ",
  "tha-ap135:0.3": "3 Candanapūjanakattheraapadāna ",
  "tha-ap135:1.1": "“Candabhāgānadītīre, ",
  "tha-ap135:1.2": "ahosiṁ kinnaro tadā; ",
  "tha-ap135:1.3": "Pupphabhakkho cahaṁ āsiṁ, ",
  "tha-ap135:1.4": "pupphānivasano tathā. ",
  "tha-ap135:2.1": "Atthadassī tu bhagavā, ",
  "tha-ap135:2.2": "lokajeṭṭho narāsabho; ",
  "tha-ap135:2.3": "Vipinaggena niyyāsi, ",
  "tha-ap135:2.4": "haṁsarājāva ambare. ",
  "tha-ap135:3.1": "Namo te purisājañña, ",
  "tha-ap135:3.2": "cittaṁ te suvisodhitaṁ; ",
  "tha-ap135:3.3": "Pasannamukhavaṇṇosi, ",
  "tha-ap135:3.4": "vippasannamukhindriyo. ",
  "tha-ap135:4.1": "Orohitvāna ākāsā, ",
  "tha-ap135:4.2": "bhūripañño sumedhaso; ",
  "tha-ap135:4.3": "Saṅghāṭiṁ pattharitvāna, ",
  "tha-ap135:4.4": "pallaṅkena upāvisi. ",
  "tha-ap135:5.1": "Vilīnaṁ candanādāya, ",
  "tha-ap135:5.2": "agamāsiṁ jinantikaṁ; ",
  "tha-ap135:5.3": "Pasannacitto sumano, ",
  "tha-ap135:5.4": "buddhassa abhiropayiṁ. ",
  "tha-ap135:6.1": "Abhivādetvāna sambuddhaṁ, ",
  "tha-ap135:6.2": "lokajeṭṭhaṁ narāsabhaṁ; ",
  "tha-ap135:6.3": "Pāmojjaṁ janayitvāna, ",
  "tha-ap135:6.4": "pakkāmiṁ uttarāmukho. ",
  "tha-ap135:7.1": "Aṭṭhārase kappasate, ",
  "tha-ap135:7.2": "candanaṁ yaṁ apūjayiṁ; ",
  "tha-ap135:7.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap135:7.4": "buddhapūjāyidaṁ phalaṁ. ",
  "tha-ap135:8.1": "Catuddase kappasate, ",
  "tha-ap135:8.2": "ito āsiṁsu te tayo; ",
  "tha-ap135:8.3": "Rohaṇī nāma nāmena, ",
  "tha-ap135:8.4": "cakkavattī mahabbalā. ",
  "tha-ap135:9.1": "Paṭisambhidā catasso, ",
  "tha-ap135:9.2": "…pe… ",
  "tha-ap135:9.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap135:10.1": "Itthaṁ sudaṁ āyasmā candanapūjanako thero imā gāthāyo abhāsitthāti. ",
  "tha-ap135:11.1": "Candanapūjanakattherassāpadānaṁ tatiyaṁ. ",
  "tha-ap135:11.2": "Aṭṭhamabhāṇavāraṁ. "
}