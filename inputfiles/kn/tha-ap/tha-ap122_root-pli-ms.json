{
"tha-ap122:1.1": "Therāpadāna",
"tha-ap122:2.1": "Mahāparivāravagga",
"tha-ap122:3.1": "10. Jātipūjakattheraapadāna",
"tha-ap122:4.1": "“Jāyantassa vipassissa,",
"tha-ap122:4.2": "āloko vipulo ahu;",
"tha-ap122:4.3": "Pathavī ca pakampittha,",
"tha-ap122:4.4": "sasāgarā sapabbatā.",
"tha-ap122:5.1": "Nemittā ca viyākaṃsu,",
"tha-ap122:5.2": "buddho loke bhavissati;",
"tha-ap122:5.3": "Aggo ca sabbasattānaṃ,",
"tha-ap122:5.4": "janataṃ uddharissati.",
"tha-ap122:6.1": "Nemittānaṃ suṇitvāna,",
"tha-ap122:6.2": "jātipūjamakāsahaṃ;",
"tha-ap122:6.3": "Edisā pūjanā natthi,",
"tha-ap122:6.4": "yādisā jātipūjanā.",
"tha-ap122:7.1": "Saṅkharitvāna kusalaṃ,",
"tha-ap122:7.2": "sakaṃ cittaṃ pasādayiṃ;",
"tha-ap122:7.3": "Jātipūjaṃ karitvāna,",
"tha-ap122:7.4": "tattha kālaṅkato ahaṃ.",
"tha-ap122:8.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap122:8.2": "devattaṃ atha mānusaṃ;",
"tha-ap122:8.3": "Sabbe satte abhibhomi,",
"tha-ap122:8.4": "jātipūjāyidaṃ phalaṃ.",
"tha-ap122:9.1": "Dhātiyo maṃ upaṭṭhanti,",
"tha-ap122:9.2": "mama cittavasānugā;",
"tha-ap122:9.3": "Na tā sakkonti kopetuṃ,",
"tha-ap122:9.4": "jātipūjāyidaṃ phalaṃ.",
"tha-ap122:10.1": "Ekanavutito kappe,",
"tha-ap122:10.2": "yaṃ pūjamakariṃ tadā;",
"tha-ap122:10.3": "Duggatiṃ nābhijānāmi,",
"tha-ap122:10.4": "jātipūjāyidaṃ phalaṃ.",
"tha-ap122:11.1": "Supāricariyā nāma,",
"tha-ap122:11.2": "catuttiṃsa janādhipā;",
"tha-ap122:11.3": "Ito tatiyakappamhi,",
"tha-ap122:11.4": "cakkavattī mahabbalā.",
"tha-ap122:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap122:12.4": "kataṃ buddhassa sāsanaṃ”. #1758",
"tha-ap122:13.1": "Itthaṃ sudaṃ āyasmā jātipūjako thero imā gāthāyo abhāsitthāti.",
"tha-ap122:14.1": "Jātipūjakattherassāpadānaṃ dasamaṃ.",
"tha-ap122:15.1": "Mahāparivāravaggo dvādasamo.",
"tha-ap122:16.1": "Tassuddānaṃ",
"tha-ap122:17.1": "Parivārasumaṅgalā,",
"tha-ap122:17.2": "saraṇāsanapupphiyā;",
"tha-ap122:17.3": "Citapūjī buddhasaññī,",
"tha-ap122:17.4": "maggupaṭṭhānajātinā;",
"tha-ap122:17.5": "Gāthāyo navuti vuttā,",
"tha-ap122:17.6": "gaṇitāyo vibhāvihi."
}