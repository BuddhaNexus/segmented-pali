{
"tha-ap39:1.1": "Therāpadāna",
"tha-ap39:2.1": "Kuṇḍadhānavagga",
"tha-ap39:3.1": "7. Lasuṇadāyakattheraapadāna",
"tha-ap39:4.1": "“Himavantassāvidūre,",
"tha-ap39:4.2": "tāpaso āsahaṃ tadā;",
"tha-ap39:4.3": "Lasuṇaṃ upajīvāmi,",
"tha-ap39:4.4": "lasuṇaṃ mayhabhojanaṃ.",
"tha-ap39:5.1": "Khāriyo pūrayitvāna,",
"tha-ap39:5.2": "saṃghārāmamagacchahaṃ;",
"tha-ap39:5.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap39:5.4": "saṃghassa lasuṇaṃ adaṃ.",
"tha-ap39:6.1": "Vipassissa naraggassa,",
"tha-ap39:6.2": "sāsane niratassahaṃ;",
"tha-ap39:6.3": "Saṃghassa lasuṇaṃ datvā,",
"tha-ap39:6.4": "kappaṃ saggamhi modahaṃ.",
"tha-ap39:7.1": "Ekanavutito kappe,",
"tha-ap39:7.2": "lasuṇaṃ yamadaṃ tadā;",
"tha-ap39:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap39:7.4": "lasuṇassa idaṃ phalaṃ.",
"tha-ap39:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap39:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap39:9.1": "Itthaṃ sudaṃ āyasmā lasuṇadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap39:10.1": "Lasuṇadāyakattherassāpadānaṃ sattamaṃ."
}