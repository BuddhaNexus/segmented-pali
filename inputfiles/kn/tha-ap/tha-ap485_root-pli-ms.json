{
"tha-ap485:1.1": "Therāpadāna",
"tha-ap485:2.1": "Paṃsukūlavagga",
"tha-ap485:3.1": "3. Bhisadāyakattheraapadāna",
"tha-ap485:4.1": "“Ogayha yaṃ pokkharaṇiṃ,",
"tha-ap485:4.2": "nānākuñjarasevitaṃ;",
"tha-ap485:4.3": "Uddharāmi bhisaṃ tattha,",
"tha-ap485:4.4": "ghāsahetu ahaṃ tadā.",
"tha-ap485:5.1": "Bhagavā tamhi samaye,",
"tha-ap485:5.2": "padumuttarasavhayo;",
"tha-ap485:5.3": "Rattambaradharo buddho,",
"tha-ap485:5.4": "gacchati anilañjase.",
"tha-ap485:6.1": "Dhunanto paṃsukūlāni,",
"tha-ap485:6.2": "saddamassosahaṃ tadā;",
"tha-ap485:6.3": "Uddhaṃ nijjhāyamānohaṃ,",
"tha-ap485:6.4": "addasaṃ lokanāyakaṃ.",
"tha-ap485:7.1": "Tattheva ṭhitako santo,",
"tha-ap485:7.2": "āyāciṃ lokanāyakaṃ;",
"tha-ap485:7.3": "‘Madhuṃ bhisehi savati,",
"tha-ap485:7.4": "khīraṃ sappiṃ muḷālibhi.",
"tha-ap485:8.1": "Paṭiggaṇhātu me buddho,",
"tha-ap485:8.2": "anukampāya cakkhumā’;",
"tha-ap485:8.3": "Tato kāruṇiko satthā,",
"tha-ap485:8.4": "oruhitvā mahāyaso.",
"tha-ap485:9.1": "Paṭiggaṇhi mamaṃ bhikkhaṃ,",
"tha-ap485:9.2": "anukampāya cakkhumā;",
"tha-ap485:9.3": "Paṭiggahetvā sambuddho,",
"tha-ap485:9.4": "akā me anumodanaṃ.",
"tha-ap485:10.1": "‘Sukhī hotu mahāpuñña,",
"tha-ap485:10.2": "gati tuyhaṃ samijjhatu;",
"tha-ap485:10.3": "Iminā bhisadānena,",
"tha-ap485:10.4": "labhassu vipulaṃ sukhaṃ’.",
"tha-ap485:11.1": "Idaṃ vatvāna sambuddho,",
"tha-ap485:11.2": "jalajuttamanāmako;",
"tha-ap485:11.3": "Bhikkhamādāya sambuddho,",
"tha-ap485:11.4": "ambarenāgamā jino.",
"tha-ap485:12.1": "Tato bhisaṃ gahetvāna,",
"tha-ap485:12.2": "āgacchiṃ mama assamaṃ;",
"tha-ap485:12.3": "Bhisaṃ rukkhe lagetvāna,",
"tha-ap485:12.4": "mama dānamanussariṃ.",
"tha-ap485:13.1": "Mahāvāto vuṭṭhahitvā,",
"tha-ap485:13.2": "sañcālesi vanaṃ tadā;",
"tha-ap485:13.3": "Ākāso abhinādittha,",
"tha-ap485:13.4": "asaniyā phalantiyā.",
"tha-ap485:14.1": "Tato me asanīpāto,",
"tha-ap485:14.2": "matthake nipatī tadā;",
"tha-ap485:14.3": "Sohaṃ nisinnako santo,",
"tha-ap485:14.4": "tattha kālaṅkato ahuṃ.",
"tha-ap485:15.1": "Puññakammena saṃyutto,",
"tha-ap485:15.2": "tusitaṃ upapajjahaṃ;",
"tha-ap485:15.3": "Kaḷevaraṃ me patitaṃ,",
"tha-ap485:15.4": "devaloke ramiṃ ahaṃ.",
"tha-ap485:16.1": "Chaḷasītisahassāni,",
"tha-ap485:16.2": "nāriyo samalaṅkatā;",
"tha-ap485:16.3": "Sāyaṃ pātaṃ upaṭṭhanti,",
"tha-ap485:16.4": "bhisadānassidaṃ phalaṃ.",
"tha-ap485:17.1": "Manussayonimāgantvā,",
"tha-ap485:17.2": "sukhito homahaṃ sadā;",
"tha-ap485:17.3": "Bhoge me ūnatā natthi,",
"tha-ap485:17.4": "bhisadānassidaṃ phalaṃ.",
"tha-ap485:18.1": "Anukampitako tena,",
"tha-ap485:18.2": "devadevena tādinā;",
"tha-ap485:18.3": "Sabbāsavā parikkhīṇā,",
"tha-ap485:18.4": "natthi dāni punabbhavo.",
"tha-ap485:19.1": "Satasahassito kappe,",
"tha-ap485:19.2": "yaṃ bhisaṃ adadiṃ tadā;",
"tha-ap485:19.3": "Duggatiṃ nābhijānāmi,",
"tha-ap485:19.4": "bhisadānassidaṃ phalaṃ.",
"tha-ap485:20.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap485:20.4": "viharāmi anāsavo.",
"tha-ap485:21.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap485:21.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap485:22.1": "Paṭisambhidā catasso, … pe …",
"tha-ap485:22.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap485:23.1": "Itthaṃ sudaṃ āyasmā bhisadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap485:24.1": "Bhisadāyakattherassāpadānaṃ tatiyaṃ."
}