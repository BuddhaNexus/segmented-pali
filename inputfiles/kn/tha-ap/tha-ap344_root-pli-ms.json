{
"tha-ap344:1.1": "Therāpadāna",
"tha-ap344:2.1": "Ekapadumiyavagga",
"tha-ap344:3.1": "2 Tīṇuppalamāliyattheraapadāna",
"tha-ap344:4.1": "“Candabhāgānadītīre,",
"tha-ap344:4.2": "ahosiṃ vānaro tadā;",
"tha-ap344:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap344:4.4": "nisinnaṃ pabbatantare.",
"tha-ap344:5.1": "Obhāsentaṃ disā sabbā,",
"tha-ap344:5.2": "sālarājaṃva phullitaṃ;",
"tha-ap344:5.3": "Lakkhaṇabyañjanūpetaṃ,",
"tha-ap344:5.4": "disvā attamano ahuṃ.",
"tha-ap344:6.1": "Udaggacitto sumano,",
"tha-ap344:6.2": "pītiyā haṭṭhamānaso;",
"tha-ap344:6.3": "Tīṇi uppalapupphāni,",
"tha-ap344:6.4": "matthake abhiropayiṃ.",
"tha-ap344:7.1": "Pupphāni abhiropetvā,",
"tha-ap344:7.2": "vipassissa mahesino;",
"tha-ap344:7.3": "Sagāravo bhavitvāna,",
"tha-ap344:7.4": "pakkāmiṃ uttarāmukho.",
"tha-ap344:8.1": "Gacchanto paṭikuṭiko,",
"tha-ap344:8.2": "vippasannena cetasā;",
"tha-ap344:8.3": "Selantare patitvāna,",
"tha-ap344:8.4": "pāpuṇiṃ jīvitakkhayaṃ.",
"tha-ap344:9.1": "Tena kammena sukatena,",
"tha-ap344:9.2": "cetanāpaṇidhīhi ca;",
"tha-ap344:9.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap344:9.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap344:10.1": "Satānaṃ tīṇikkhattuñca,",
"tha-ap344:10.2": "devarajjaṃ akārayiṃ;",
"tha-ap344:10.3": "Satānaṃ pañcakkhattuñca,",
"tha-ap344:10.4": "cakkavattī ahosahaṃ.",
"tha-ap344:11.1": "Ekanavutito kappe,",
"tha-ap344:11.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap344:11.3": "Duggatiṃ nābhijānāmi,",
"tha-ap344:11.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap344:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap344:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap344:13.1": "Itthaṃ sudaṃ āyasmā tīṇuppalamāliyo thero imā gāthāyo abhāsitthāti.",
"tha-ap344:14.1": "Tīṇuppalamāliyattherassāpadānaṃ dutiyaṃ."
}