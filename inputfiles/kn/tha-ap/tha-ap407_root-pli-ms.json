{
"tha-ap407:1.1": "Therāpadāna",
"tha-ap407:2.1": "Metteyyavagga",
"tha-ap407:3.1": "5 Upasivattheraapadāna",
"tha-ap407:4.1": "“Himavantassāvidūre,",
"tha-ap407:4.2": "anomo nāma pabbato;",
"tha-ap407:4.3": "Assamo sukato mayhaṃ,",
"tha-ap407:4.4": "paṇṇasālā sumāpitā.",
"tha-ap407:5.1": "Nadī ca sandatī tattha,",
"tha-ap407:5.2": "supatitthā manoramā;",
"tha-ap407:5.3": "Anūpatitthe jāyanti,",
"tha-ap407:5.4": "padumuppalakā bahū.",
"tha-ap407:6.1": "Pāṭhīnā pāvusā macchā,",
"tha-ap407:6.2": "balajā muñjarohitā;",
"tha-ap407:6.3": "Macchakacchapasañchannā,",
"tha-ap407:6.4": "nadikā sandate tadā.",
"tha-ap407:7.1": "Timirā pupphitā tattha,",
"tha-ap407:7.2": "asokā khuddamālakā;",
"tha-ap407:7.3": "Punnāgā giripunnāgā,",
"tha-ap407:7.4": "sampavanti mamassamaṃ.",
"tha-ap407:8.1": "Kuṭajā pupphitā tattha,",
"tha-ap407:8.2": "tiṇasūlavanāni ca;",
"tha-ap407:8.3": "Sālā ca saḷalā tattha,",
"tha-ap407:8.4": "campakā pupphitā bahū.",
"tha-ap407:9.1": "Ajjunā atimuttā ca,",
"tha-ap407:9.2": "mahānāmā ca pupphitā;",
"tha-ap407:9.3": "Asanā madhugandhī ca,",
"tha-ap407:9.4": "pupphitā te mamassame.",
"tha-ap407:10.1": "Uddālakā pāṭalikā,",
"tha-ap407:10.2": "yūthikā ca piyaṅgukā;",
"tha-ap407:10.3": "Bimbijālakasañchannā,",
"tha-ap407:10.4": "samantā aḍḍhayojanaṃ.",
"tha-ap407:11.1": "Mātaggārā sattaliyo,",
"tha-ap407:11.2": "pāṭalī sinduvārakā;",
"tha-ap407:11.3": "Aṅkolakā bahū tattha,",
"tha-ap407:11.4": "tālakuṭṭhi ca pupphitā;",
"tha-ap407:11.5": "Seleyyakā bahū tattha,",
"tha-ap407:11.6": "pupphitā mama assame.",
"tha-ap407:12.1": "Etesu pupphajātesu,",
"tha-ap407:12.2": "sobhanti pādapā bahū;",
"tha-ap407:12.3": "Samantā tena gandhena,",
"tha-ap407:12.4": "vāyate mama assamo.",
"tha-ap407:13.1": "Harītakā āmalakā,",
"tha-ap407:13.2": "ambajambuvibhītakā;",
"tha-ap407:13.3": "Kolā bhallātakā billā,",
"tha-ap407:13.4": "phārusakaphalāni ca.",
"tha-ap407:14.1": "Tindukā ca piyālā ca,",
"tha-ap407:14.2": "madhukā kāsumārayo;",
"tha-ap407:14.3": "Labujā panasā tattha,",
"tha-ap407:14.4": "kadalī badarīphalā.",
"tha-ap407:15.1": "Ambāṭakā bahū tattha,",
"tha-ap407:15.2": "vallikāraphalāni ca;",
"tha-ap407:15.3": "Bījapūrasapāriyo,",
"tha-ap407:15.4": "phalitā mama assame.",
"tha-ap407:16.1": "Āḷakā isimuggā ca,",
"tha-ap407:16.2": "tato modaphalā bahū;",
"tha-ap407:16.3": "Avaṭā pakkabharitā,",
"tha-ap407:16.4": "pilakkhudumbarāni ca.",
"tha-ap407:17.1": "Pipphalī marīcā tattha,",
"tha-ap407:17.2": "nigrodhā ca kapitthanā;",
"tha-ap407:17.3": "Udumbarakā bahavo,",
"tha-ap407:17.4": "kaṇḍupaṇṇā ca hariyo.",
"tha-ap407:18.1": "Ete caññe ca bahavo,",
"tha-ap407:18.2": "phalitā assame mama;",
"tha-ap407:18.3": "Puppharukkhāpi bahavo,",
"tha-ap407:18.4": "pupphitā mama assame.",
"tha-ap407:19.1": "Āluvā ca kaḷambā ca,",
"tha-ap407:19.2": "biḷālī takkalāni ca;",
"tha-ap407:19.3": "Ālakā tālakā ceva,",
"tha-ap407:19.4": "vijjanti assame mama.",
"tha-ap407:20.1": "Assamassāvidūre me,",
"tha-ap407:20.2": "mahājātassaro ahu;",
"tha-ap407:20.3": "Acchodako sītajalo,",
"tha-ap407:20.4": "supatittho manoramo.",
"tha-ap407:21.1": "Padumuppalā bahū tattha,",
"tha-ap407:21.2": "puṇḍarīkasamāyutā;",
"tha-ap407:21.3": "Mandālakehi sañchannā,",
"tha-ap407:21.4": "nānāgandhasameritā.",
"tha-ap407:22.1": "Gabbhaṃ gaṇhanti padumā,",
"tha-ap407:22.2": "aññe pupphanti kesarī;",
"tha-ap407:22.3": "Opupphapattā tiṭṭhanti,",
"tha-ap407:22.4": "padumākaṇṇikā bahū.",
"tha-ap407:23.1": "Madhu bhisamhā savati,",
"tha-ap407:23.2": "khīraṃ sappi mulāḷibhi;",
"tha-ap407:23.3": "Samantā tena gandhena,",
"tha-ap407:23.4": "nānāgandhasameritā.",
"tha-ap407:24.1": "Kumudā ambagandhi ca,",
"tha-ap407:24.2": "nayitā dissare bahū;",
"tha-ap407:24.3": "Jātassarassānukūlaṃ,",
"tha-ap407:24.4": "ketakā pupphitā bahū.",
"tha-ap407:25.1": "Suphullā bandhujīvā ca,",
"tha-ap407:25.2": "setavārī sugandhikā;",
"tha-ap407:25.3": "Kumbhilā susumārā ca,",
"tha-ap407:25.4": "gahakā tattha jāyare.",
"tha-ap407:26.1": "Uggāhakā ajagarā,",
"tha-ap407:26.2": "tattha jātassare bahū;",
"tha-ap407:26.3": "Pāṭhīnā pāvusā macchā,",
"tha-ap407:26.4": "balajā muñjarohitā.",
"tha-ap407:27.1": "Macchakacchapasañchannā,",
"tha-ap407:27.2": "atho papaṭakāhi ca;",
"tha-ap407:27.3": "Pārevatā ravihaṃsā,",
"tha-ap407:27.4": "kukutthā ca nadīcarā.",
"tha-ap407:28.1": "Dindibhā cakkavākā ca,",
"tha-ap407:28.2": "pampakā jīvajīvakā;",
"tha-ap407:28.3": "Kalandakā ukkusā ca,",
"tha-ap407:28.4": "senakā uddharā bahū.",
"tha-ap407:29.1": "Koṭṭhakā sukapotā ca,",
"tha-ap407:29.2": "tuliyā camarā bahū;",
"tha-ap407:29.3": "Kāreniyo ca tilakā,",
"tha-ap407:29.4": "upajīvanti taṃ saraṃ.",
"tha-ap407:30.1": "Sīhā byagghā ca dīpī ca,",
"tha-ap407:30.2": "acchakokataracchakā;",
"tha-ap407:30.3": "Vānarā kinnarā ceva,",
"tha-ap407:30.4": "dissanti mama assame.",
"tha-ap407:31.1": "Tāni gandhāni ghāyanto,",
"tha-ap407:31.2": "bhakkhayanto phalānahaṃ;",
"tha-ap407:31.3": "Gandhodakaṃ pivanto ca,",
"tha-ap407:31.4": "vasāmi mama assame.",
"tha-ap407:32.1": "Eṇīmigā varāhā ca,",
"tha-ap407:32.2": "pasadā khuddarūpakā;",
"tha-ap407:32.3": "Aggikā jotikā ceva,",
"tha-ap407:32.4": "vasanti mama assame.",
"tha-ap407:33.1": "Haṃsā koñcā mayūrā ca,",
"tha-ap407:33.2": "sālikāpi ca kokilā;",
"tha-ap407:33.3": "Majjārikā bahū tattha,",
"tha-ap407:33.4": "kosikā poṭṭhasīsakā.",
"tha-ap407:34.1": "Pisācā dānavā ceva,",
"tha-ap407:34.2": "kumbhaṇḍā rakkhasā bahū;",
"tha-ap407:34.3": "Garuḷā pannagā ceva,",
"tha-ap407:34.4": "vasanti mama assame.",
"tha-ap407:35.1": "Mahānubhāvā isayo,",
"tha-ap407:35.2": "santacittā samāhitā;",
"tha-ap407:35.3": "Kamaṇḍaludharā sabbe,",
"tha-ap407:35.4": "ajinuttaravāsanā;",
"tha-ap407:35.5": "Jaṭābhārabharitāva,",
"tha-ap407:35.6": "vasanti mama assame.",
"tha-ap407:36.1": "Yugamattañca pekkhantā,",
"tha-ap407:36.2": "nipakā santavuttino;",
"tha-ap407:36.3": "Lābhālābhena santuṭṭhā,",
"tha-ap407:36.4": "vasanti mama assame.",
"tha-ap407:37.1": "Vākacīraṃ dhunantā te,",
"tha-ap407:37.2": "phoṭentājinacammakaṃ;",
"tha-ap407:37.3": "Sabalehi upatthaddhā,",
"tha-ap407:37.4": "gacchanti ambare tadā.",
"tha-ap407:38.1": "Na te dakaṃ āharanti,",
"tha-ap407:38.2": "kaṭṭhaṃ vā aggidārukaṃ;",
"tha-ap407:38.3": "Sayañca upasampannā,",
"tha-ap407:38.4": "pāṭihīrassidaṃ phalaṃ.",
"tha-ap407:39.1": "Lohadoṇiṃ gahetvāna,",
"tha-ap407:39.2": "vanamajjhe vasanti te;",
"tha-ap407:39.3": "Kuñjarāva mahānāgā,",
"tha-ap407:39.4": "asambhītāva kesarī.",
"tha-ap407:40.1": "Aññe gacchanti goyānaṃ,",
"tha-ap407:40.2": "aññe pubbavidehakaṃ;",
"tha-ap407:40.3": "Aññe ca uttarakuruṃ,",
"tha-ap407:40.4": "sakaṃ balamavassitā.",
"tha-ap407:41.1": "Tato piṇḍaṃ āharitvā,",
"tha-ap407:41.2": "paribhuñjanti ekato;",
"tha-ap407:41.3": "Sabbesaṃ pakkamantānaṃ,",
"tha-ap407:41.4": "uggatejāna tādinaṃ.",
"tha-ap407:42.1": "Ajinacammasaddena,",
"tha-ap407:42.2": "vanaṃ saddāyate tadā;",
"tha-ap407:42.3": "Edisā te mahāvīra,",
"tha-ap407:42.4": "sissā uggatapā mama.",
"tha-ap407:43.1": "Parivuto ahaṃ tehi,",
"tha-ap407:43.2": "vasāmi mama assame;",
"tha-ap407:43.3": "Tositā sakakammena,",
"tha-ap407:43.4": "vinītāpi samāgatā.",
"tha-ap407:44.1": "Ārādhayiṃsu maṃ ete,",
"tha-ap407:44.2": "sakakammābhilāsino;",
"tha-ap407:44.3": "Sīlavanto ca nipakā,",
"tha-ap407:44.4": "appamaññāsu kovidā.",
"tha-ap407:45.1": "Padumuttaro lokavidū,",
"tha-ap407:45.2": "āhutīnaṃ paṭiggaho;",
"tha-ap407:45.3": "Samayaṃ saṃviditvāna,",
"tha-ap407:45.4": "upagacchi vināyako.",
"tha-ap407:46.1": "Upagantvāna sambuddho,",
"tha-ap407:46.2": "ātāpī nipako muni;",
"tha-ap407:46.3": "Pattaṃ paggayha sambuddho,",
"tha-ap407:46.4": "bhikkhāya mamupāgami.",
"tha-ap407:47.1": "Upāgataṃ mahāvīraṃ,",
"tha-ap407:47.2": "jalajuttamanāyakaṃ;",
"tha-ap407:47.3": "Tiṇasantharaṃ paññāpetvā,",
"tha-ap407:47.4": "sālapupphehi okiriṃ.",
"tha-ap407:48.1": "Nisādetvāna sambuddhaṃ,",
"tha-ap407:48.2": "haṭṭho saṃviggamānaso;",
"tha-ap407:48.3": "Khippaṃ pabbatamāruyha,",
"tha-ap407:48.4": "agaḷuṃ aggahiṃ ahaṃ.",
"tha-ap407:49.1": "Kumbhamattaṃ gahetvāna,",
"tha-ap407:49.2": "panasaṃ devagandhikaṃ;",
"tha-ap407:49.3": "Khandhe āropayitvāna,",
"tha-ap407:49.4": "upagacchiṃ vināyakaṃ.",
"tha-ap407:50.1": "Phalaṃ buddhassa datvāna,",
"tha-ap407:50.2": "agaḷuṃ anulimpahaṃ;",
"tha-ap407:50.3": "Pasannacitto sumano,",
"tha-ap407:50.4": "buddhaseṭṭhaṃ avandihaṃ.",
"tha-ap407:51.1": "Padumuttaro lokavidū,",
"tha-ap407:51.2": "āhutīnaṃ paṭiggaho;",
"tha-ap407:51.3": "Isimajjhe nisīditvā,",
"tha-ap407:51.4": "imā gāthā abhāsatha.",
"tha-ap407:52.1": "‘Yo me phalañca agaḷuṃ,",
"tha-ap407:52.2": "āsanañca adāsi me;",
"tha-ap407:52.3": "Tamahaṃ kittayissāmi,",
"tha-ap407:52.4": "suṇātha mama bhāsato.",
"tha-ap407:53.1": "Gāme vā yadi vāraññe,",
"tha-ap407:53.2": "pabbhāresu guhāsu vā;",
"tha-ap407:53.3": "Imassa cittamaññāya,",
"tha-ap407:53.4": "nibbattissati bhojanaṃ.",
"tha-ap407:54.1": "Devaloke manusse vā,",
"tha-ap407:54.2": "upapanno ayaṃ naro;",
"tha-ap407:54.3": "Bhojanehi ca vatthehi,",
"tha-ap407:54.4": "parisaṃ tappayissati.",
"tha-ap407:55.1": "Upapajjati yaṃ yoniṃ,",
"tha-ap407:55.2": "devattaṃ atha mānusaṃ;",
"tha-ap407:55.3": "Akkhobhabhogo hutvāna,",
"tha-ap407:55.4": "saṃsarissatiyaṃ naro.",
"tha-ap407:56.1": "Tiṃsakappasahassāni,",
"tha-ap407:56.2": "devaloke ramissati;",
"tha-ap407:56.3": "Sahassakkhattuṃ rājā ca,",
"tha-ap407:56.4": "cakkavattī bhavissati.",
"tha-ap407:57.1": "Ekasattatikkhattuñca,",
"tha-ap407:57.2": "devarajjaṃ karissati;",
"tha-ap407:57.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap407:57.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap407:58.1": "Kappasatasahassamhi,",
"tha-ap407:58.2": "okkākakulasambhavo;",
"tha-ap407:58.3": "Gotamo nāma gottena,",
"tha-ap407:58.4": "satthā loke bhavissati.",
"tha-ap407:59.1": "Tassa dhammesu dāyādo,",
"tha-ap407:59.2": "oraso dhammanimmito;",
"tha-ap407:59.3": "()",
"tha-ap407:59.4": "Sabbāsave pariññāya,",
"tha-ap407:59.5": "viharissatināsavo’.",
"tha-ap407:60.1": "Suladdhalābho laddho me,",
"tha-ap407:60.2": "yohaṃ addakkhiṃ nāyakaṃ;",
"tha-ap407:60.3": "Tisso vijjā anuppattā,",
"tha-ap407:60.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap407:61.1": "Gāme vā yadi vāraññe,",
"tha-ap407:61.2": "pabbhāresu guhāsu vā;",
"tha-ap407:61.3": "Mama saṅkappamaññāya,",
"tha-ap407:61.4": "bhojanaṃ hoti me sadā.",
"tha-ap407:62.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap407:62.4": "viharāmi anāsavo.",
"tha-ap407:63.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap407:63.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap407:64.1": "Paṭisambhidā catasso, … pe …",
"tha-ap407:64.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap407:65.1": "Itthaṃ sudaṃ āyasmā upasivo thero imā gāthāyo abhāsitthāti.",
"tha-ap407:66.1": "Upasivattherassāpadānaṃ pañcamaṃ."
}