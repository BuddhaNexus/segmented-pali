{
"tha-ap553:1.1": "Therāpadāna",
"tha-ap553:2.1": "Yasavagga",
"tha-ap553:3.1": "1. Yasattheraapadāna",
"tha-ap553:4.1": "“Mahāsamuddaṃ oggayha,",
"tha-ap553:4.2": "bhavanaṃ me sunimmitaṃ;",
"tha-ap553:4.3": "Sunimmitā pokkharaṇī,",
"tha-ap553:4.4": "cakkavākūpakūjitā.",
"tha-ap553:5.1": "Mandārakehi sañchannā,",
"tha-ap553:5.2": "padumuppalakehi ca;",
"tha-ap553:5.3": "Nadī ca sandate tattha,",
"tha-ap553:5.4": "supatitthā manoramā.",
"tha-ap553:6.1": "Macchakacchapasañchannā,",
"tha-ap553:6.2": "nānādijasamotthaṭā;",
"tha-ap553:6.3": "Mayūrakoñcābhirudā,",
"tha-ap553:6.4": "kokilādīhi vagguhi.",
"tha-ap553:7.1": "Pārevatā ravihaṃsā,",
"tha-ap553:7.2": "cakkavākā nadīcarā;",
"tha-ap553:7.3": "Tittirā sālikā cettha,",
"tha-ap553:7.4": "pāvakā jīvaṃjīvakā.",
"tha-ap553:8.1": "Haṃsākoñcābhinaditā,",
"tha-ap553:8.2": "kosiyā piṅgalā bahū;",
"tha-ap553:8.3": "Sattaratanasampannā,",
"tha-ap553:8.4": "maṇimuttapavāḷikā.",
"tha-ap553:9.1": "Sabbe soṇṇamayā rukkhā,",
"tha-ap553:9.2": "nānākhandhasameritā;",
"tha-ap553:9.3": "Ujjotenti divārattiṃ,",
"tha-ap553:9.4": "bhavanaṃ sabbakālikaṃ.",
"tha-ap553:10.1": "Saṭṭhituriyasahassāni,",
"tha-ap553:10.2": "sāyaṃ pāto pavajjare;",
"tha-ap553:10.3": "Soḷasitthisahassāni,",
"tha-ap553:10.4": "parivārenti maṃ sadā.",
"tha-ap553:11.1": "Abhinikkhamma bhavanā,",
"tha-ap553:11.2": "sumedhaṃ lokanāyakaṃ;",
"tha-ap553:11.3": "Pasannacitto sumano,",
"tha-ap553:11.4": "vandayiṃ taṃ mahāyasaṃ.",
"tha-ap553:12.1": "Sambuddhaṃ abhivādetvā,",
"tha-ap553:12.2": "sasaṃghaṃ taṃ nimantayiṃ;",
"tha-ap553:12.3": "Adhivāsesi so dhīro,",
"tha-ap553:12.4": "sumedho lokanāyako.",
"tha-ap553:13.1": "Mama dhammakathaṃ katvā,",
"tha-ap553:13.2": "uyyojesi mahāmuni;",
"tha-ap553:13.3": "Sambuddhaṃ abhivādetvā,",
"tha-ap553:13.4": "bhavanaṃ me upāgamiṃ.",
"tha-ap553:14.1": "Āmantayiṃ parijanaṃ,",
"tha-ap553:14.2": "sabbe sannipatuṃ tadā;",
"tha-ap553:14.3": "‘Pubbaṇhasamayaṃ buddho,",
"tha-ap553:14.4": "bhavanaṃ āgamissati.",
"tha-ap553:15.1": "Lābhā amhaṃ suladdhā no,",
"tha-ap553:15.2": "ye vasāma tavantike;",
"tha-ap553:15.3": "Mayampi buddhaseṭṭhassa,",
"tha-ap553:15.4": "pūjayissāma satthuno’.",
"tha-ap553:16.1": "Annaṃ pānaṃ paṭṭhapetvā,",
"tha-ap553:16.2": "kālaṃ ārocayiṃ ahaṃ;",
"tha-ap553:16.3": "Vasīsatasahassehi,",
"tha-ap553:16.4": "upesi lokanāyako.",
"tha-ap553:17.1": "Pañcaṅgikehi turiyehi,",
"tha-ap553:17.2": "paccuggamamakāsahaṃ;",
"tha-ap553:17.3": "Sabbasoṇṇamaye pīṭhe,",
"tha-ap553:17.4": "nisīdi purisuttamo.",
"tha-ap553:18.1": "Uparicchadanaṃ āsi,",
"tha-ap553:18.2": "sabbasoṇṇamayaṃ tadā;",
"tha-ap553:18.3": "Bījanīyo pavāyanti,",
"tha-ap553:18.4": "bhikkhusaṃghaṃ anuttaraṃ.",
"tha-ap553:19.1": "Pahūtenannapānena,",
"tha-ap553:19.2": "bhikkhusaṃghaṃ atappayiṃ;",
"tha-ap553:19.3": "Paccekadussayugale,",
"tha-ap553:19.4": "bhikkhusaṃghassadāsahaṃ.",
"tha-ap553:20.1": "Yaṃ vadeti sumedho so,",
"tha-ap553:20.2": "āhutīnaṃ paṭiggaho;",
"tha-ap553:20.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap553:20.4": "imā gāthā abhāsatha.",
"tha-ap553:21.1": "‘Yo maṃ annena pānena,",
"tha-ap553:21.2": "sabbe ime ca tappayi;",
"tha-ap553:21.3": "Tamahaṃ kittayissāmi,",
"tha-ap553:21.4": "suṇātha mama bhāsato.",
"tha-ap553:22.1": "Aṭṭhārase kappasate,",
"tha-ap553:22.2": "devaloke ramissati;",
"tha-ap553:22.3": "Sahassakkhattuṃ rājāyaṃ,",
"tha-ap553:22.4": "cakkavattī bhavissati.",
"tha-ap553:23.1": "Upagacchati yaṃ yoniṃ,",
"tha-ap553:23.2": "devattaṃ atha mānusaṃ;",
"tha-ap553:23.3": "Sabbasoṇṇamayaṃ tassa,",
"tha-ap553:23.4": "chadanaṃ dhārayissati.",
"tha-ap553:24.1": "Tiṃsakappasahassamhi,",
"tha-ap553:24.2": "okkākakulasambhavo;",
"tha-ap553:24.3": "Gotamo nāma gottena,",
"tha-ap553:24.4": "satthā loke bhavissati.",
"tha-ap553:25.1": "Tassa dhammesu dāyādo,",
"tha-ap553:25.2": "oraso dhammanimmito;",
"tha-ap553:25.3": "Sabbāsave pariññāya,",
"tha-ap553:25.4": "nibbāyissatināsavo.",
"tha-ap553:26.1": "Bhikkhusaṃghe nisīditvā,",
"tha-ap553:26.2": "sīhanādaṃ nadissati;",
"tha-ap553:26.3": "Citake chattaṃ dhārenti,",
"tha-ap553:26.4": "heṭṭhā chattamhi ḍayhatha’.",
"tha-ap553:27.1": "Sāmaññaṃ me anuppattaṃ,",
"tha-ap553:27.2": "kilesā jhāpitā mayā;",
"tha-ap553:27.3": "Maṇḍape rukkhamūle vā,",
"tha-ap553:27.4": "santāso me na vijjati.",
"tha-ap553:28.1": "Tiṃsakappasahassamhi,",
"tha-ap553:28.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap553:28.3": "Duggatiṃ nābhijānāmi,",
"tha-ap553:28.4": "sabbadānassidaṃ phalaṃ.",
"tha-ap553:29.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap553:29.2": "bhavā sabbe samūhatā;",
"tha-ap553:29.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap553:29.4": "viharāmi anāsavo.",
"tha-ap553:30.1": "Svāgataṃ vata me āsi,",
"tha-ap553:30.2": "mama buddhassa santike;",
"tha-ap553:30.3": "Tisso vijjā anuppattā,",
"tha-ap553:30.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap553:31.1": "Paṭisambhidā catasso,",
"tha-ap553:31.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap553:31.3": "Chaḷabhiññā sacchikatā,",
"tha-ap553:31.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap553:32.1": "Itthaṃ sudaṃ āyasmā yaso thero imā gāthāyo abhāsitthāti.",
"tha-ap553:33.1": "Yasattherassāpadānaṃ paṭhamaṃ."
}