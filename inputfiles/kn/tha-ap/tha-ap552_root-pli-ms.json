{
"tha-ap552:1.1": "Therāpadāna",
"tha-ap552:2.1": "Bhaddiyavagga",
"tha-ap552:3.1": "10. Cūḷasugandhattheraapadāna",
"tha-ap552:4.1": "“Imamhi bhaddake kappe,",
"tha-ap552:4.2": "brahmabandhu mahāyaso;",
"tha-ap552:4.3": "Kassapo nāma gottena,",
"tha-ap552:4.4": "uppajji vadataṃ varo.",
"tha-ap552:5.1": "Anubyañjanasampanno,",
"tha-ap552:5.2": "bāttiṃsavaralakkhaṇo;",
"tha-ap552:5.3": "Byāmappabhāparivuto,",
"tha-ap552:5.4": "raṃsijālasamotthaṭo.",
"tha-ap552:6.1": "Assāsetā yathā cando,",
"tha-ap552:6.2": "sūriyova pabhaṅkaro;",
"tha-ap552:6.3": "Nibbāpetā yathā megho,",
"tha-ap552:6.4": "sāgarova guṇākaro.",
"tha-ap552:7.1": "Dharaṇīriva sīlena,",
"tha-ap552:7.2": "himavāva samādhinā;",
"tha-ap552:7.3": "Ākāso viya paññāya,",
"tha-ap552:7.4": "asaṅgo anilo yathā.",
"tha-ap552:8.1": "Tadāhaṃ bārāṇasiyaṃ,",
"tha-ap552:8.2": "upapanno mahākule;",
"tha-ap552:8.3": "Pahūtadhanadhaññasmiṃ,",
"tha-ap552:8.4": "nānāratanasañcaye.",
"tha-ap552:9.1": "Mahatā parivārena,",
"tha-ap552:9.2": "nisinnaṃ lokanāyakaṃ;",
"tha-ap552:9.3": "Upecca dhammamassosiṃ,",
"tha-ap552:9.4": "amataṃva manoharaṃ.",
"tha-ap552:10.1": "Dvattiṃsalakkhaṇadharo,",
"tha-ap552:10.2": "sanakkhattova candimā;",
"tha-ap552:10.3": "Anubyañjanasampanno,",
"tha-ap552:10.4": "sālarājāva phullito.",
"tha-ap552:11.1": "Raṃsijālaparikkhitto,",
"tha-ap552:11.2": "dittova kanakācalo;",
"tha-ap552:11.3": "Byāmappabhāparivuto,",
"tha-ap552:11.4": "sataraṃsī divākaro.",
"tha-ap552:12.1": "Soṇṇānano jinavaro,",
"tha-ap552:12.2": "samaṇīva siluccayo;",
"tha-ap552:12.3": "Karuṇā puṇṇahadayo,",
"tha-ap552:12.4": "guṇena viya sāgaro.",
"tha-ap552:13.1": "Lokavissutakitti ca,",
"tha-ap552:13.2": "sinerūva naguttamo;",
"tha-ap552:13.3": "Yasasā vitthato vīro,",
"tha-ap552:13.4": "ākāsasadiso muni.",
"tha-ap552:14.1": "Asaṅgacitto sabbattha,",
"tha-ap552:14.2": "anilo viya nāyako;",
"tha-ap552:14.3": "Patiṭṭhā sabbabhūtānaṃ,",
"tha-ap552:14.4": "mahīva munisattamo.",
"tha-ap552:15.1": "Anupalitto lokena,",
"tha-ap552:15.2": "toyena padumaṃ yathā;",
"tha-ap552:15.3": "Kuvādagacchadahano,",
"tha-ap552:15.4": "aggikhandhova sobhasi.",
"tha-ap552:16.1": "Agadho viya sabbattha,",
"tha-ap552:16.2": "kilesavisanāsako;",
"tha-ap552:16.3": "Gandhamādanaselova,",
"tha-ap552:16.4": "guṇagandhavibhūsito.",
"tha-ap552:17.1": "Guṇānaṃ ākaro vīro,",
"tha-ap552:17.2": "ratanānaṃva sāgaro;",
"tha-ap552:17.3": "Sindhūva vanarājīnaṃ,",
"tha-ap552:17.4": "kilesamalahārako.",
"tha-ap552:18.1": "Vijayīva mahāyodho,",
"tha-ap552:18.2": "mārasenāvamaddano;",
"tha-ap552:18.3": "Cakkavattīva so rājā,",
"tha-ap552:18.4": "bojjhaṅgaratanissaro.",
"tha-ap552:19.1": "Mahābhisakkasaṅkāso,",
"tha-ap552:19.2": "dosabyādhitikicchako;",
"tha-ap552:19.3": "Sallakatto yathā vejjo,",
"tha-ap552:19.4": "diṭṭhigaṇḍaviphālako.",
"tha-ap552:20.1": "So tadā lokapajjoto,",
"tha-ap552:20.2": "sanarāmarasakkato;",
"tha-ap552:20.3": "Parisāsu narādicco,",
"tha-ap552:20.4": "dhammaṃ desayate jino.",
"tha-ap552:21.1": "‘Dānaṃ datvā mahābhogo,",
"tha-ap552:21.2": "sīlena sugatūpago;",
"tha-ap552:21.3": "Bhāvanāya ca nibbāti’,",
"tha-ap552:21.4": "iccevamanusāsatha.",
"tha-ap552:22.1": "Desanaṃ taṃ mahassādaṃ,",
"tha-ap552:22.2": "ādimajjhantasobhanaṃ;",
"tha-ap552:22.3": "Suṇanti parisā sabbā,",
"tha-ap552:22.4": "amataṃva mahārasaṃ.",
"tha-ap552:23.1": "Sutvā sumadhuraṃ dhammaṃ,",
"tha-ap552:23.2": "pasanno jinasāsane;",
"tha-ap552:23.3": "Sugataṃ saraṇaṃ gantvā,",
"tha-ap552:23.4": "yāvajīvaṃ namassahaṃ.",
"tha-ap552:24.1": "Munino gandhakuṭiyā,",
"tha-ap552:24.2": "opuñjesiṃ tadā mahiṃ;",
"tha-ap552:24.3": "Catujjātena gandhena,",
"tha-ap552:24.4": "māse aṭṭha dinesvahaṃ.",
"tha-ap552:25.1": "Paṇidhāya sugandhattaṃ,",
"tha-ap552:25.2": "sarīravissagandhino;",
"tha-ap552:25.3": "Tadā jino viyākāsi,",
"tha-ap552:25.4": "sugandhatanulābhitaṃ.",
"tha-ap552:26.1": "‘Yo yaṃ gandhakuṭibhūmiṃ,",
"tha-ap552:26.2": "gandhenopuñjate sakiṃ;",
"tha-ap552:26.3": "Tena kammavipākena,",
"tha-ap552:26.4": "upapanno tahiṃ tahiṃ.",
"tha-ap552:27.1": "Sugandhadeho sabbattha,",
"tha-ap552:27.2": "bhavissati ayaṃ naro;",
"tha-ap552:27.3": "Guṇagandhayutto hutvā,",
"tha-ap552:27.4": "nibbāyissatināsavo’.",
"tha-ap552:28.1": "Tena kammena sukatena,",
"tha-ap552:28.2": "cetanāpaṇidhīhi ca;",
"tha-ap552:28.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap552:28.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap552:29.1": "Pacchime ca bhave dāni,",
"tha-ap552:29.2": "jāto vippakule ahaṃ;",
"tha-ap552:29.3": "Gabbhaṃ me vasato mātā,",
"tha-ap552:29.4": "dehenāsi sugandhitā.",
"tha-ap552:30.1": "Yadā ca mātukucchimhā,",
"tha-ap552:30.2": "nikkhamāmi tadā purī;",
"tha-ap552:30.3": "Sāvatthisabbagandhehi,",
"tha-ap552:30.4": "vāsitā viya vāyatha.",
"tha-ap552:31.1": "Pupphavassañca surabhi,",
"tha-ap552:31.2": "dibbagandhaṃ manoramaṃ;",
"tha-ap552:31.3": "Dhūpāni ca mahagghāni,",
"tha-ap552:31.4": "upavāyiṃsu tāvade.",
"tha-ap552:32.1": "Devā ca sabbagandhehi,",
"tha-ap552:32.2": "dhūpapupphehi taṃ gharaṃ;",
"tha-ap552:32.3": "Vāsayiṃsu sugandhena,",
"tha-ap552:32.4": "yasmiṃ jāto ahaṃ ghare.",
"tha-ap552:33.1": "Yadā ca taruṇo bhaddo,",
"tha-ap552:33.2": "paṭhame yobbane ṭhito;",
"tha-ap552:33.3": "Tadā selaṃ saparisaṃ,",
"tha-ap552:33.4": "vinetvā narasārathi.",
"tha-ap552:34.1": "Tehi sabbehi parivuto,",
"tha-ap552:34.2": "sāvatthipuramāgato;",
"tha-ap552:34.3": "Tadā buddhānubhāvaṃ taṃ,",
"tha-ap552:34.4": "disvā pabbajito ahaṃ.",
"tha-ap552:35.1": "Sīlaṃ samādhipaññañca,",
"tha-ap552:35.2": "vimuttiñca anuttaraṃ;",
"tha-ap552:35.3": "Bhāvetvā caturo dhamme,",
"tha-ap552:35.4": "pāpuṇiṃ āsavakkhayaṃ.",
"tha-ap552:36.1": "Yadā pabbajito cāhaṃ,",
"tha-ap552:36.2": "yadā ca arahā ahuṃ;",
"tha-ap552:36.3": "Nibbāyissaṃ yadā cāhaṃ,",
"tha-ap552:36.4": "gandhavasso tadā ahu.",
"tha-ap552:37.1": "Sarīragandho ca sadātiseti me,",
"tha-ap552:37.2": "Mahārahaṃ candanacampakuppalaṃ;",
"tha-ap552:37.3": "Tatheva gandhe itare ca sabbaso,",
"tha-ap552:37.4": "Pasayha vāyāmi tato tahiṃ tahiṃ.",
"tha-ap552:38.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap552:38.4": "viharāmi anāsavo.",
"tha-ap552:39.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap552:39.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap552:40.1": "Paṭisambhidā catasso, … pe …",
"tha-ap552:40.4": "kataṃ buddhassa sāsanaṃ”. #6245",
"tha-ap552:41.1": "Itthaṃ sudaṃ āyasmā cūḷasugandho thero imā gāthāyo abhāsitthāti.",
"tha-ap552:42.1": "Cūḷasugandhattherassāpadānaṃ dasamaṃ.",
"tha-ap552:43.1": "Bhaddiyavaggo pañcapaññāsamo.",
"tha-ap552:44.1": "Tassuddānaṃ",
"tha-ap552:45.1": "Bhaddiyo revato thero,",
"tha-ap552:45.2": "mahālābhī ca sīvali;",
"tha-ap552:45.3": "Vaṅgīso nandako ceva,",
"tha-ap552:45.4": "kāḷudāyī tathābhayo.",
"tha-ap552:46.1": "Lomaso vanavaccho ca,",
"tha-ap552:46.2": "sugandho ceva dasamo;",
"tha-ap552:46.3": "Tīṇi gāthāsatā tattha,",
"tha-ap552:46.4": "soḷasā ca taduttari.",
"tha-ap552:47.1": "Atha vagguddānaṃ",
"tha-ap552:48.1": "Kaṇikāravhayo vaggo,",
"tha-ap552:48.2": "phalado tiṇadāyako;",
"tha-ap552:48.3": "Kaccāno bhaddiyo vaggo,",
"tha-ap552:48.4": "gāthāyo gaṇitā cimā.",
"tha-ap552:49.1": "Navagāthāsatānīha,",
"tha-ap552:49.2": "caturāsītiyeva ca;",
"tha-ap552:49.3": "Sapaññāsaṃ pañcasataṃ,",
"tha-ap552:49.4": "apadānā pakāsitā.",
"tha-ap552:50.1": "Saha udānagāthāhi,",
"tha-ap552:50.2": "chasahassāni hontimā;",
"tha-ap552:50.3": "Dvesatāni ca gāthānaṃ,",
"tha-ap552:50.4": "aṭṭhārasa taduttari."
}