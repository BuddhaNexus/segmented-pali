{
"tha-ap413:1.1": "Therāpadāna",
"tha-ap413:2.1": "Bhaddālivagga",
"tha-ap413:3.1": "1. Bhaddālittheraapadāna",
"tha-ap413:4.1": "“Sumedho nāma sambuddho,",
"tha-ap413:4.2": "aggo kāruṇiko muni;",
"tha-ap413:4.3": "Vivekakāmo lokaggo,",
"tha-ap413:4.4": "himavantamupāgami.",
"tha-ap413:5.1": "Ajjhogāhetvā himavaṃ,",
"tha-ap413:5.2": "sumedho lokanāyako;",
"tha-ap413:5.3": "Pallaṅkaṃ ābhujitvāna,",
"tha-ap413:5.4": "nisīdi purisuttamo.",
"tha-ap413:6.1": "Samādhiṃ so samāpanno,",
"tha-ap413:6.2": "sumedho lokanāyako;",
"tha-ap413:6.3": "Sattarattindivaṃ buddho,",
"tha-ap413:6.4": "nisīdi purisuttamo.",
"tha-ap413:7.1": "Khāribhāraṃ gahetvāna,",
"tha-ap413:7.2": "vanamajjhogahiṃ ahaṃ;",
"tha-ap413:7.3": "Tatthaddasāsiṃ sambuddhaṃ,",
"tha-ap413:7.4": "oghatiṇṇamanāsavaṃ.",
"tha-ap413:8.1": "Sammajjaniṃ gahetvāna,",
"tha-ap413:8.2": "sammajjitvāna assamaṃ;",
"tha-ap413:8.3": "Catudaṇḍe ṭhapetvāna,",
"tha-ap413:8.4": "akāsiṃ maṇḍapaṃ tadā.",
"tha-ap413:9.1": "Sālapupphaṃ āharitvā,",
"tha-ap413:9.2": "maṇḍapaṃ chādayiṃ ahaṃ;",
"tha-ap413:9.3": "Pasannacitto sumano,",
"tha-ap413:9.4": "abhivandiṃ tathāgataṃ.",
"tha-ap413:10.1": "Yaṃ vadanti sumedhoti,",
"tha-ap413:10.2": "bhūripaññaṃ sumedhasaṃ;",
"tha-ap413:10.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap413:10.4": "imā gāthā abhāsatha.",
"tha-ap413:11.1": "Buddhassa giramaññāya,",
"tha-ap413:11.2": "sabbe devā samāgamuṃ;",
"tha-ap413:11.3": "Asaṃsayaṃ buddhaseṭṭho,",
"tha-ap413:11.4": "dhammaṃ deseti cakkhumā.",
"tha-ap413:12.1": "Sumedho nāma sambuddho,",
"tha-ap413:12.2": "āhutīnaṃ paṭiggaho;",
"tha-ap413:12.3": "Devasaṅghe nisīditvā,",
"tha-ap413:12.4": "imā gāthā abhāsatha.",
"tha-ap413:13.1": "‘Yo me sattāhaṃ maṇḍapaṃ,",
"tha-ap413:13.2": "dhārayī sālachāditaṃ;",
"tha-ap413:13.3": "Tamahaṃ kittayissāmi,",
"tha-ap413:13.4": "suṇātha mama bhāsato.",
"tha-ap413:14.1": "Devabhūto manusso vā,",
"tha-ap413:14.2": "hemavaṇṇo bhavissati;",
"tha-ap413:14.3": "Pahūtabhogo hutvāna,",
"tha-ap413:14.4": "kāmabhogī bhavissati.",
"tha-ap413:15.1": "Saṭṭhi nāgasahassāni,",
"tha-ap413:15.2": "sabbālaṅkārabhūsitā;",
"tha-ap413:15.3": "Suvaṇṇakacchā mātaṅgā,",
"tha-ap413:15.4": "hemakappanavāsasā.",
"tha-ap413:16.1": "Ārūḷhā gāmaṇīyehi,",
"tha-ap413:16.2": "tomaraṅkusapāṇibhi;",
"tha-ap413:16.3": "Sāyaṃ pāto upaṭṭhānaṃ,",
"tha-ap413:16.4": "āgamissantimaṃ naraṃ;",
"tha-ap413:16.5": "Tehi nāgehi parivuto,",
"tha-ap413:16.6": "ramissati ayaṃ naro.",
"tha-ap413:17.1": "Saṭṭhi assasahassāni,",
"tha-ap413:17.2": "sabbālaṅkārabhūsitā;",
"tha-ap413:17.3": "Ājānīyāva jātiyā,",
"tha-ap413:17.4": "sindhavā sīghavāhino.",
"tha-ap413:18.1": "Ārūḷhā gāmaṇīyehi,",
"tha-ap413:18.2": "illiyācāpadhāribhi;",
"tha-ap413:18.3": "Parivāressantimaṃ niccaṃ,",
"tha-ap413:18.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap413:19.1": "Saṭṭhi rathasahassāni,",
"tha-ap413:19.2": "sabbālaṅkārabhūsitā;",
"tha-ap413:19.3": "Dīpā athopi veyagghā,",
"tha-ap413:19.4": "sannaddhā ussitaddhajā.",
"tha-ap413:20.1": "Ārūḷhā gāmaṇīyehi,",
"tha-ap413:20.2": "cāpahatthehi vammibhi;",
"tha-ap413:20.3": "Parivāressantimaṃ niccaṃ,",
"tha-ap413:20.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap413:21.1": "Saṭṭhi gāmasahassāni,",
"tha-ap413:21.2": "paripuṇṇāni sabbaso;",
"tha-ap413:21.3": "Pahūtadhanadhaññāni,",
"tha-ap413:21.4": "susamiddhāni sabbaso;",
"tha-ap413:21.5": "Sadā pātubhavissanti,",
"tha-ap413:21.6": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap413:22.1": "Hatthī assā rathā pattī,",
"tha-ap413:22.2": "senā ca caturaṅginī;",
"tha-ap413:22.3": "Parivāressantimaṃ niccaṃ,",
"tha-ap413:22.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap413:23.1": "Aṭṭhārase kappasate,",
"tha-ap413:23.2": "devaloke ramissati;",
"tha-ap413:23.3": "Sahassakkhattuṃ rājā ca,",
"tha-ap413:23.4": "cakkavattī bhavissati.",
"tha-ap413:24.1": "Satānaṃ tīṇikkhattuñca,",
"tha-ap413:24.2": "devarajjaṃ karissati;",
"tha-ap413:24.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap413:24.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap413:25.1": "Tiṃsakappasahassamhi,",
"tha-ap413:25.2": "okkākakulasambhavo;",
"tha-ap413:25.3": "Gotamo nāma gottena,",
"tha-ap413:25.4": "satthā loke bhavissati.",
"tha-ap413:26.1": "Tassa dhammesu dāyādo,",
"tha-ap413:26.2": "oraso dhammanimmito;",
"tha-ap413:26.3": "Sabbāsave pariññāya,",
"tha-ap413:26.4": "viharissatināsavo’.",
"tha-ap413:27.1": "Tiṃsakappasahassamhi,",
"tha-ap413:27.2": "addasaṃ lokanāyakaṃ;",
"tha-ap413:27.3": "Etthantaramupādāya,",
"tha-ap413:27.4": "gavesiṃ amataṃ padaṃ.",
"tha-ap413:28.1": "Lābhā mayhaṃ suladdhaṃ me,",
"tha-ap413:28.2": "yamahaññāsi sāsanaṃ;",
"tha-ap413:28.3": "Tisso vijjā anuppattā,",
"tha-ap413:28.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap413:29.1": "Namo te purisājañña,",
"tha-ap413:29.2": "namo te purisuttama;",
"tha-ap413:29.3": "Tava ñāṇaṃ pakittetvā,",
"tha-ap413:29.4": "pattomhi acalaṃ padaṃ.",
"tha-ap413:30.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap413:30.2": "devattaṃ atha mānusaṃ;",
"tha-ap413:30.3": "Sabbattha sukhito homi,",
"tha-ap413:30.4": "phalaṃ me ñāṇakittane.",
"tha-ap413:31.1": "Idaṃ pacchimakaṃ mayhaṃ,",
"tha-ap413:31.2": "carimo vattate bhavo;",
"tha-ap413:31.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap413:31.4": "viharāmi anāsavo.",
"tha-ap413:32.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap413:32.2": "bhavā sabbe samūhatā;",
"tha-ap413:32.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap413:32.4": "viharāmi anāsavo.",
"tha-ap413:33.1": "Svāgataṃ vata me āsi,",
"tha-ap413:33.2": "mama buddhassa santike;",
"tha-ap413:33.3": "Tisso vijjā anuppattā,",
"tha-ap413:33.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap413:34.1": "Paṭisambhidā catasso,",
"tha-ap413:34.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap413:34.3": "Chaḷabhiññā sacchikatā,",
"tha-ap413:34.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap413:35.1": "Itthaṃ sudaṃ āyasmā bhaddālitthero imā gāthāyo abhāsitthāti.",
"tha-ap413:36.1": "Bhaddālittherassāpadānaṃ paṭhamaṃ."
}