{
"tha-ap326:1.1": "Therāpadāna",
"tha-ap326:2.1": "Umāpupphiyavagga",
"tha-ap326:3.1": "4. Yaññasāmikattheraapadāna",
"tha-ap326:4.1": "“Jātiyā sattavassohaṃ,",
"tha-ap326:4.2": "ahosiṃ mantapāragū;",
"tha-ap326:4.3": "Kulavattaṃ adhāresiṃ,",
"tha-ap326:4.4": "yañño ussāhito mayā.",
"tha-ap326:5.1": "Cullāsītisahassāni,",
"tha-ap326:5.2": "pasū haññanti me tadā;",
"tha-ap326:5.3": "Sārathambhupanītāni,",
"tha-ap326:5.4": "yaññatthāya upaṭṭhitā.",
"tha-ap326:6.1": "Ukkāmukhapahaṭṭhova,",
"tha-ap326:6.2": "khadiraṅgārasannibho;",
"tha-ap326:6.3": "Udayantova sūriyo,",
"tha-ap326:6.4": "puṇṇamāyeva candimā.",
"tha-ap326:7.1": "Siddhattho sabbasiddhattho,",
"tha-ap326:7.2": "tilokamahito hito;",
"tha-ap326:7.3": "Upagantvāna sambuddho,",
"tha-ap326:7.4": "idaṃ vacanamabravi.",
"tha-ap326:8.1": "‘Ahiṃsā sabbapāṇīnaṃ,",
"tha-ap326:8.2": "kumāra mama ruccati;",
"tha-ap326:8.3": "Theyyā ca aticārā ca,",
"tha-ap326:8.4": "majjapānā ca ārati.",
"tha-ap326:9.1": "Rati ca samacariyāya,",
"tha-ap326:9.2": "bāhusaccaṃ kataññutā;",
"tha-ap326:9.3": "Diṭṭhe dhamme parattha ca,",
"tha-ap326:9.4": "dhammā ete pasaṃsiyā.",
"tha-ap326:10.1": "Ete dhamme bhāvayitvā,",
"tha-ap326:10.2": "sabbasattahite rato;",
"tha-ap326:10.3": "Buddhe cittaṃ pasādetvā,",
"tha-ap326:10.4": "bhāvehi maggamuttamaṃ’.",
"tha-ap326:11.1": "Idaṃ vatvāna sabbaññū,",
"tha-ap326:11.2": "lokajeṭṭho narāsabho;",
"tha-ap326:11.3": "Mamevaṃ anusāsitvā,",
"tha-ap326:11.4": "vehāsaṃ uggato gato.",
"tha-ap326:12.1": "Pubbe cittaṃ visodhetvā,",
"tha-ap326:12.2": "pacchā cittaṃ pasādayiṃ;",
"tha-ap326:12.3": "Tena cittappasādena,",
"tha-ap326:12.4": "tusitaṃ upapajjahaṃ.",
"tha-ap326:13.1": "Catunnavutito kappe,",
"tha-ap326:13.2": "yadā cittaṃ pasādayiṃ;",
"tha-ap326:13.3": "Duggatiṃ nābhijānāmi,",
"tha-ap326:13.4": "buddhasaññāyidaṃ phalaṃ.",
"tha-ap326:14.1": "Paṭisambhidā catasso, … pe …",
"tha-ap326:14.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap326:15.1": "Itthaṃ sudaṃ āyasmā yaññasāmiko thero imā gāthāyo abhāsitthāti.",
"tha-ap326:16.1": "Yaññasāmikattherassāpadānaṃ catutthaṃ."
}