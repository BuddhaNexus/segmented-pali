{
"tha-ap324:1.1": "Therāpadāna",
"tha-ap324:2.1": "Umāpupphiyavagga",
"tha-ap324:3.1": "2 Pulinapūjakattheraapadāna",
"tha-ap324:4.1": "“Kakudhaṃ vilasantaṃva,",
"tha-ap324:4.2": "nisabhājāniyaṃ yathā;",
"tha-ap324:4.3": "Osadhiṃva virocantaṃ,",
"tha-ap324:4.4": "obhāsantaṃ narāsabhaṃ.",
"tha-ap324:5.1": "Añjaliṃ paggahetvāna,",
"tha-ap324:5.2": "avandiṃ satthuno ahaṃ;",
"tha-ap324:5.3": "Satthāraṃ parivaṇṇesiṃ,",
"tha-ap324:5.4": "sakakammena tosayiṃ.",
"tha-ap324:6.1": "Susuddhaṃ pulinaṃ gayha,",
"tha-ap324:6.2": "gatamagge samokiriṃ;",
"tha-ap324:6.3": "Ucchaṅgena gahetvāna,",
"tha-ap324:6.4": "vipassissa mahesino.",
"tha-ap324:7.1": "Tato upaḍḍhapulinaṃ,",
"tha-ap324:7.2": "vippasannena cetasā;",
"tha-ap324:7.3": "Divāvihāre osiñciṃ,",
"tha-ap324:7.4": "dvipadindassa tādino.",
"tha-ap324:8.1": "Ekanavutito kappe,",
"tha-ap324:8.2": "pulinaṃ yamasiñcahaṃ;",
"tha-ap324:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap324:8.4": "pulinassa idaṃ phalaṃ.",
"tha-ap324:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap324:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap324:10.1": "Itthaṃ sudaṃ āyasmā pulinapūjako thero imā gāthāyo abhāsitthāti.",
"tha-ap324:11.1": "Pulinapūjakattherassāpadānaṃ dutiyaṃ."
}