{
"tha-ap198:1.1": "Therāpadāna",
"tha-ap198:2.1": "Tamālapupphiyavagga",
"tha-ap198:3.1": "6. Kisalayapūjakattheraapadāna",
"tha-ap198:4.1": "“Nagare dvāravatiyā,",
"tha-ap198:4.2": "mālāvaccho mamaṃ ahu;",
"tha-ap198:4.3": "Udapāno ca tattheva,",
"tha-ap198:4.4": "pādapānaṃ virohano.",
"tha-ap198:5.1": "Sabalena upatthaddho,",
"tha-ap198:5.2": "siddhattho aparājito;",
"tha-ap198:5.3": "Mamānukampamāno so,",
"tha-ap198:5.4": "gacchate anilañjase.",
"tha-ap198:6.1": "Aññaṃ kiñci na passāmi,",
"tha-ap198:6.2": "pūjāyoggaṃ mahesino;",
"tha-ap198:6.3": "Asokaṃ pallavaṃ disvā,",
"tha-ap198:6.4": "ākāse ukkhipiṃ ahaṃ.",
"tha-ap198:7.1": "Buddhassa te kisalayā,",
"tha-ap198:7.2": "gacchato yanti pacchato;",
"tha-ap198:7.3": "Tāhaṃ disvāna saṃvijiṃ,",
"tha-ap198:7.4": "aho buddhassuḷāratā.",
"tha-ap198:8.1": "Catunnavutito kappe,",
"tha-ap198:8.2": "pallavaṃ abhiropayiṃ;",
"tha-ap198:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap198:8.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap198:9.1": "Sattatiṃse ito kappe,",
"tha-ap198:9.2": "eko ekissaro ahu;",
"tha-ap198:9.3": "Sattaratanasampanno,",
"tha-ap198:9.4": "cakkavattī mahabbalo.",
"tha-ap198:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap198:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap198:11.1": "Itthaṃ sudaṃ āyasmā kisalayapūjako thero imā gāthāyo abhāsitthāti.",
"tha-ap198:12.1": "Kisalayapūjakattherassāpadānaṃ chaṭṭhaṃ."
}