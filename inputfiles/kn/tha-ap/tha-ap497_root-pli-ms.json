{
"tha-ap497:1.1": "Therāpadāna",
"tha-ap497:2.1": "Kiṅkaṇipupphavagga",
"tha-ap497:3.1": "5. Upaḍḍhadussadāyakattheraapadāna",
"tha-ap497:4.1": "“Padumuttarabhagavato,",
"tha-ap497:4.2": "sujāto nāma sāvako;",
"tha-ap497:4.3": "Paṃsukūlaṃ gavesanto,",
"tha-ap497:4.4": "saṅkāre carate tadā.",
"tha-ap497:5.1": "Nagare haṃsavatiyā,",
"tha-ap497:5.2": "paresaṃ bhatako ahaṃ;",
"tha-ap497:5.3": "Upaḍḍhadussaṃ datvāna,",
"tha-ap497:5.4": "sirasā abhivādayiṃ.",
"tha-ap497:6.1": "Tena kammena sukatena,",
"tha-ap497:6.2": "cetanāpaṇidhīhi ca;",
"tha-ap497:6.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap497:6.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap497:7.1": "Tettiṃsakkhattuṃ devindo,",
"tha-ap497:7.2": "devarajjamakārayiṃ;",
"tha-ap497:7.3": "Sattasattatikkhattuñca,",
"tha-ap497:7.4": "cakkavattī ahosahaṃ.",
"tha-ap497:8.1": "Padesarajjaṃ vipulaṃ,",
"tha-ap497:8.2": "gaṇanāto asaṅkhiyaṃ;",
"tha-ap497:8.3": "Upaḍḍhadussadānena,",
"tha-ap497:8.4": "modāmi akutobhayo.",
"tha-ap497:9.1": "Icchamāno cahaṃ ajja,",
"tha-ap497:9.2": "sakānanaṃ sapabbataṃ;",
"tha-ap497:9.3": "Khomadussehi chādeyyaṃ,",
"tha-ap497:9.4": "aḍḍhadussassidaṃ phalaṃ.",
"tha-ap497:10.1": "Satasahassito kappe,",
"tha-ap497:10.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap497:10.3": "Duggatiṃ nābhijānāmi,",
"tha-ap497:10.4": "aḍḍhadussassidaṃ phalaṃ.",
"tha-ap497:11.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap497:11.4": "viharāmi anāsavo.",
"tha-ap497:12.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap497:12.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap497:13.1": "Paṭisambhidā catasso, … pe …",
"tha-ap497:13.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap497:14.1": "Itthaṃ sudaṃ āyasmā upaḍḍhadussadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap497:15.1": "Upaḍḍhadussadāyakattherassāpadānaṃ pañcamaṃ."
}