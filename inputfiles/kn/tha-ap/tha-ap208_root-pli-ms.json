{
"tha-ap208:1.1": "Therāpadāna",
"tha-ap208:2.1": "Kaṇikārapupphiyavagga",
"tha-ap208:3.1": "6. Udakadāyakattheraapadāna",
"tha-ap208:4.1": "“Bhuñjantaṃ samaṇaṃ disvā,",
"tha-ap208:4.2": "vippasannamanāvilaṃ;",
"tha-ap208:4.3": "Ghaṭenodakamādāya,",
"tha-ap208:4.4": "siddhatthassa adāsahaṃ.",
"tha-ap208:5.1": "Nimmalo homahaṃ ajja,",
"tha-ap208:5.2": "vimalo khīṇasaṃsayo;",
"tha-ap208:5.3": "Bhave nibbattamānamhi,",
"tha-ap208:5.4": "phalaṃ nibbattate mama.",
"tha-ap208:6.1": "Catunnavutito kappe,",
"tha-ap208:6.2": "udakaṃ yamadāsahaṃ;",
"tha-ap208:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap208:6.4": "dakadānassidaṃ phalaṃ.",
"tha-ap208:7.1": "Ekasaṭṭhimhito kappe,",
"tha-ap208:7.2": "ekova vimalo ahu;",
"tha-ap208:7.3": "Sattaratanasampanno,",
"tha-ap208:7.4": "cakkavattī mahabbalo.",
"tha-ap208:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap208:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap208:9.1": "Itthaṃ sudaṃ āyasmā udakadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap208:10.1": "Udakadāyakattherassāpadānaṃ chaṭṭhaṃ."
}