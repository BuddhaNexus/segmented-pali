{
"tha-ap78:1.1": "Therāpadāna",
"tha-ap78:2.1": "Nāgasamālavagga",
"tha-ap78:3.1": "6 Tiṇasantharadāyakattheraapadāna",
"tha-ap78:4.1": "“Himavantassāvidūre,",
"tha-ap78:4.2": "mahājātassaro ahu;",
"tha-ap78:4.3": "Satapattehi sañchanno,",
"tha-ap78:4.4": "nānāsakuṇamālayo.",
"tha-ap78:5.1": "Tamhi nhatvā ca pitvā ca,",
"tha-ap78:5.2": "avidūre vasāmahaṃ;",
"tha-ap78:5.3": "Addasaṃ samaṇānaggaṃ,",
"tha-ap78:5.4": "gacchantaṃ anilañjase.",
"tha-ap78:6.1": "Mama saṅkappamaññāya,",
"tha-ap78:6.2": "satthā loke anuttaro;",
"tha-ap78:6.3": "Abbhato oruhitvāna,",
"tha-ap78:6.4": "bhūmiyaṃṭhāsi tāvade.",
"tha-ap78:7.1": "Visāṇena tiṇaṃ gayha,",
"tha-ap78:7.2": "nisīdanamadāsahaṃ;",
"tha-ap78:7.3": "Nisīdi bhagavā tattha,",
"tha-ap78:7.4": "tisso lokagganāyako.",
"tha-ap78:8.1": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap78:8.2": "avandi lokanāyakaṃ;",
"tha-ap78:8.3": "Paṭikuṭiko apasakkiṃ,",
"tha-ap78:8.4": "nijjhāyanto mahāmuniṃ.",
"tha-ap78:9.1": "Tena cittappasādena,",
"tha-ap78:9.2": "nimmānaṃ upapajjahaṃ;",
"tha-ap78:9.3": "Duggatiṃ nābhijānāmi,",
"tha-ap78:9.4": "santharassa idaṃ phalaṃ.",
"tha-ap78:10.1": "Ito dutiyake kappe,",
"tha-ap78:10.2": "miga sammatakhattiyo;",
"tha-ap78:10.3": "Sattaratanasampanno,",
"tha-ap78:10.4": "cakkavattī mahabbalo.",
"tha-ap78:11.1": "Paṭisambhidā catasso, … pe …",
"tha-ap78:11.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap78:12.1": "Itthaṃ sudaṃ āyasmā tiṇasantharadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap78:13.1": "Tiṇasantharadāyakattherassāpadānaṃ chaṭṭhaṃ."
}