{
"tha-ap106:1.1": "Therāpadāna",
"tha-ap106:2.1": "Bhikkhadāyivagga",
"tha-ap106:3.1": "4. Padapūjakattheraapadāna",
"tha-ap106:4.1": "“Siddhatthassa bhagavato,",
"tha-ap106:4.2": "jātipupphamadāsahaṃ;",
"tha-ap106:4.3": "Pādesu satta pupphāni,",
"tha-ap106:4.4": "hāsenokiritāni me.",
"tha-ap106:5.1": "Tena kammenahaṃ ajja,",
"tha-ap106:5.2": "abhibhomi narāmare;",
"tha-ap106:5.3": "Dhāremi antimaṃ dehaṃ,",
"tha-ap106:5.4": "sammāsambuddhasāsane.",
"tha-ap106:6.1": "Catunnavutito kappe,",
"tha-ap106:6.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap106:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap106:6.4": "pupphapūjāyidaṃ phalaṃ.",
"tha-ap106:7.1": "Samantagandhanāmāsuṃ,",
"tha-ap106:7.2": "terasa cakkavattino;",
"tha-ap106:7.3": "Ito pañcamake kappe,",
"tha-ap106:7.4": "cāturantā janādhipā.",
"tha-ap106:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap106:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap106:9.1": "Itthaṃ sudaṃ āyasmā padapūjako thero imā gāthāyo abhāsitthāti.",
"tha-ap106:10.1": "Padapūjakattherassāpadānaṃ catutthaṃ."
}