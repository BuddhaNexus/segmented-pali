{
"tha-ap449:1.1": "Therāpadāna",
"tha-ap449:2.1": "Vibhītakavagga",
"tha-ap449:3.1": "7. Sīhāsanikattheraapadāna",
"tha-ap449:4.1": "“Padumuttarassa bhagavato,",
"tha-ap449:4.2": "Sabbabhūtahitesino;",
"tha-ap449:4.3": "Pasannacitto sumano,",
"tha-ap449:4.4": "Sīhāsanamadāsahaṃ.",
"tha-ap449:5.1": "Devaloke manusse vā,",
"tha-ap449:5.2": "yattha yattha vasāmahaṃ;",
"tha-ap449:5.3": "Labhāmi vipulaṃ byamhaṃ,",
"tha-ap449:5.4": "sīhāsanassidaṃ phalaṃ.",
"tha-ap449:6.1": "Soṇṇamayā rūpimayā,",
"tha-ap449:6.2": "lohitaṅgamayā bahū;",
"tha-ap449:6.3": "Maṇimayā ca pallaṅkā,",
"tha-ap449:6.4": "nibbattanti mamaṃ sadā.",
"tha-ap449:7.1": "Bodhiyā āsanaṃ katvā,",
"tha-ap449:7.2": "jalajuttamanāmino;",
"tha-ap449:7.3": "Ucce kule pajāyāmi,",
"tha-ap449:7.4": "aho dhammasudhammatā.",
"tha-ap449:8.1": "Satasahassito kappe,",
"tha-ap449:8.2": "sīhāsanamakāsahaṃ;",
"tha-ap449:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap449:8.4": "sīhāsanassidaṃ phalaṃ.",
"tha-ap449:9.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap449:9.4": "viharāmi anāsavo.",
"tha-ap449:10.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap449:10.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap449:11.1": "Paṭisambhidā catasso, … pe …",
"tha-ap449:11.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap449:12.1": "Itthaṃ sudaṃ āyasmā sīhāsaniko thero imā gāthāyo abhāsitthāti.",
"tha-ap449:13.1": "Sīhāsanikattherassāpadānaṃ sattamaṃ."
}