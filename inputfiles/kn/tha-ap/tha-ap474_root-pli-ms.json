{
"tha-ap474:1.1": "Therāpadāna",
"tha-ap474:2.1": "Naḷamālivagga",
"tha-ap474:3.1": "2. Maṇipūjakattheraapadāna",
"tha-ap474:4.1": "“Padumuttaro nāma jino,",
"tha-ap474:4.2": "sabbadhammāna pāragū;",
"tha-ap474:4.3": "Vivekakāmo sambuddho,",
"tha-ap474:4.4": "gacchate anilañjase.",
"tha-ap474:5.1": "Avidūre himavantassa,",
"tha-ap474:5.2": "mahājātassaro ahu;",
"tha-ap474:5.3": "Tattha me bhavanaṃ āsi,",
"tha-ap474:5.4": "puññakammena saṃyutaṃ.",
"tha-ap474:6.1": "Bhavanā abhinikkhamma,",
"tha-ap474:6.2": "addasaṃ lokanāyakaṃ;",
"tha-ap474:6.3": "Indīvaraṃva jalitaṃ,",
"tha-ap474:6.4": "ādittaṃva hutāsanaṃ.",
"tha-ap474:7.1": "Vicinaṃ naddasaṃ pupphaṃ,",
"tha-ap474:7.2": "pūjayissanti nāyakaṃ;",
"tha-ap474:7.3": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap474:7.4": "avandiṃ satthuno ahaṃ.",
"tha-ap474:8.1": "Mama sīse maṇiṃ gayha,",
"tha-ap474:8.2": "pūjayiṃ lokanāyakaṃ;",
"tha-ap474:8.3": "Imāya maṇipūjāya,",
"tha-ap474:8.4": "vipāko hotu bhaddako.",
"tha-ap474:9.1": "Padumuttaro lokavidū,",
"tha-ap474:9.2": "āhutīnaṃ paṭiggaho;",
"tha-ap474:9.3": "Antalikkhe ṭhito satthā,",
"tha-ap474:9.4": "imaṃ gāthaṃ abhāsatha.",
"tha-ap474:10.1": "‘So te ijjhatu saṅkappo,",
"tha-ap474:10.2": "labhassu vipulaṃ sukhaṃ;",
"tha-ap474:10.3": "Imāya maṇipūjāya,",
"tha-ap474:10.4": "anubhohi mahāyasaṃ’.",
"tha-ap474:11.1": "Idaṃ vatvāna bhagavā,",
"tha-ap474:11.2": "jalajuttamanāmako;",
"tha-ap474:11.3": "Agamāsi buddhaseṭṭho,",
"tha-ap474:11.4": "yattha cittaṃ paṇīhitaṃ.",
"tha-ap474:12.1": "Saṭṭhikappāni devindo,",
"tha-ap474:12.2": "devarajjamakārayiṃ;",
"tha-ap474:12.3": "Anekasatakkhattuñca,",
"tha-ap474:12.4": "cakkavattī ahosahaṃ.",
"tha-ap474:13.1": "Pubbakammaṃ sarantassa,",
"tha-ap474:13.2": "devabhūtassa me sato;",
"tha-ap474:13.3": "Maṇi nibbattate mayhaṃ,",
"tha-ap474:13.4": "ālokakaraṇo mamaṃ.",
"tha-ap474:14.1": "Chaḷasītisahassāni,",
"tha-ap474:14.2": "nāriyo me pariggahā;",
"tha-ap474:14.3": "Vicittavatthābharaṇā,",
"tha-ap474:14.4": "āmukkamaṇikuṇḍalā.",
"tha-ap474:15.1": "Aḷārapamhā hasulā,",
"tha-ap474:15.2": "susaññā tanumajjhimā;",
"tha-ap474:15.3": "Parivārenti maṃ niccaṃ,",
"tha-ap474:15.4": "maṇipūjāyidaṃ phalaṃ.",
"tha-ap474:16.1": "Soṇṇamayā maṇimayā,",
"tha-ap474:16.2": "lohitaṅgamayā tathā;",
"tha-ap474:16.3": "Bhaṇḍā me sukatā honti,",
"tha-ap474:16.4": "yadicchasi piḷandhanā.",
"tha-ap474:17.1": "Kūṭāgārā gahārammā,",
"tha-ap474:17.2": "sayanañca mahārahaṃ;",
"tha-ap474:17.3": "Mama saṅkappamaññāya,",
"tha-ap474:17.4": "nibbattanti yadicchakaṃ.",
"tha-ap474:18.1": "Lābhā tesaṃ suladdhañca,",
"tha-ap474:18.2": "ye labhanti upassutiṃ;",
"tha-ap474:18.3": "Puññakkhettaṃ manussānaṃ,",
"tha-ap474:18.4": "osadhaṃ sabbapāṇinaṃ.",
"tha-ap474:19.1": "Mayhampi sukataṃ kammaṃ,",
"tha-ap474:19.2": "yohaṃ adakkhi nāyakaṃ;",
"tha-ap474:19.3": "Vinipātā pamuttomhi,",
"tha-ap474:19.4": "pattomhi acalaṃ padaṃ.",
"tha-ap474:20.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap474:20.2": "devattaṃ atha mānusaṃ;",
"tha-ap474:20.3": "Divasañceva rattiñca,",
"tha-ap474:20.4": "āloko hoti me sadā.",
"tha-ap474:21.1": "Tāyeva maṇipūjāya,",
"tha-ap474:21.2": "anubhotvāna sampadā;",
"tha-ap474:21.3": "Ñāṇāloko mayā diṭṭho,",
"tha-ap474:21.4": "pattomhi acalaṃ padaṃ.",
"tha-ap474:22.1": "Satasahassito kappe,",
"tha-ap474:22.2": "yaṃ maṇiṃ abhipūjayiṃ;",
"tha-ap474:22.3": "Duggatiṃ nābhijānāmi,",
"tha-ap474:22.4": "maṇipūjāyidaṃ phalaṃ.",
"tha-ap474:23.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap474:23.4": "viharāmi anāsavo.",
"tha-ap474:24.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap474:24.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap474:25.1": "Paṭisambhidā catasso, … pe …",
"tha-ap474:25.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap474:26.1": "Itthaṃ sudaṃ āyasmā maṇipūjako thero imā gāthāyo abhāsitthāti.",
"tha-ap474:27.1": "Maṇipūjakattherassāpadānaṃ dutiyaṃ."
}