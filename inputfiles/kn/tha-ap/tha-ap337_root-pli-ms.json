{
"tha-ap337:1.1": "Therāpadāna",
"tha-ap337:2.1": "Gandhodakavagga",
"tha-ap337:3.1": "5 Phusitakampiyattheraapadāna",
"tha-ap337:4.1": "“Vipassī nāma sambuddho,",
"tha-ap337:4.2": "lokajeṭṭho narāsabho;",
"tha-ap337:4.3": "Khīṇāsavehi sahito,",
"tha-ap337:4.4": "saṃghārāme vasī tadā.",
"tha-ap337:5.1": "Ārāmadvārā nikkhamma,",
"tha-ap337:5.2": "vipassī lokanāyako;",
"tha-ap337:5.3": "Saha satasahassehi,",
"tha-ap337:5.4": "aṭṭha khīṇāsavehi so.",
"tha-ap337:6.1": "Ajinena nivatthohaṃ,",
"tha-ap337:6.2": "vākacīradharopi ca;",
"tha-ap337:6.3": "Kusumodakamādāya,",
"tha-ap337:6.4": "sambuddhaṃ upasaṅkamiṃ.",
"tha-ap337:7.1": "Sakaṃ cittaṃ pasādetvā,",
"tha-ap337:7.2": "vedajāto katañjalī;",
"tha-ap337:7.3": "Kusumodakamādāya,",
"tha-ap337:7.4": "buddhamabbhukkiriṃ ahaṃ.",
"tha-ap337:8.1": "Tena kammena sambuddho,",
"tha-ap337:8.2": "jalajuttamanāmako;",
"tha-ap337:8.3": "Mama kammaṃ pakittetvā,",
"tha-ap337:8.4": "agamā yena patthitaṃ.",
"tha-ap337:9.1": "Phusitā pañcasahassā,",
"tha-ap337:9.2": "yehi pūjesahaṃ jinaṃ;",
"tha-ap337:9.3": "Aḍḍhateyyasahassehi,",
"tha-ap337:9.4": "devarajjaṃ akārayiṃ.",
"tha-ap337:10.1": "Aḍḍhateyyasahassehi,",
"tha-ap337:10.2": "cakkavattī ahosahaṃ;",
"tha-ap337:10.3": "Avasesena kammena,",
"tha-ap337:10.4": "arahattamapāpuṇiṃ.",
"tha-ap337:11.1": "Devarājā yadā homi,",
"tha-ap337:11.2": "manujādhipatī yadā;",
"tha-ap337:11.3": "Tameva nāmadheyyaṃ me,",
"tha-ap337:11.4": "phusito nāma homahaṃ.",
"tha-ap337:12.1": "Devabhūtassa santassa,",
"tha-ap337:12.2": "athāpi mānusassa vā;",
"tha-ap337:12.3": "Samantā byāmato mayhaṃ,",
"tha-ap337:12.4": "phusitaṃva pavassati.",
"tha-ap337:13.1": "Bhavā ugghāṭitā mayhaṃ,",
"tha-ap337:13.2": "kilesā jhāpitā mama;",
"tha-ap337:13.3": "Sabbāsavaparikkhīṇo,",
"tha-ap337:13.4": "phusitassa idaṃ phalaṃ.",
"tha-ap337:14.1": "Candanasseva me kāyā,",
"tha-ap337:14.2": "tathā gandho pavāyati;",
"tha-ap337:14.3": "Sarīrato mama gandho,",
"tha-ap337:14.4": "aḍḍhakose pavāyati.",
"tha-ap337:15.1": "Dibbagandhaṃ sampavantaṃ,",
"tha-ap337:15.2": "puññakammasamaṅginaṃ;",
"tha-ap337:15.3": "Gandhaṃ ghatvāna jānanti,",
"tha-ap337:15.4": "phusito āgato idha.",
"tha-ap337:16.1": "Sākhāpalāsakaṭṭhāni,",
"tha-ap337:16.2": "tiṇānipi ca sabbaso;",
"tha-ap337:16.3": "Mama saṅkappamaññāya,",
"tha-ap337:16.4": "gandho sampajjate khaṇe.",
"tha-ap337:17.1": "Satasahassito kappe,",
"tha-ap337:17.2": "candanaṃ abhipūjayiṃ;",
"tha-ap337:17.3": "Duggatiṃ nābhijānāmi,",
"tha-ap337:17.4": "phusitassa idaṃ phalaṃ.",
"tha-ap337:18.1": "Paṭisambhidā catasso, … pe …",
"tha-ap337:18.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap337:19.1": "Itthaṃ sudaṃ āyasmā phusitakampiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap337:20.1": "Phusitakampiyattherassāpadānaṃ pañcamaṃ."
}