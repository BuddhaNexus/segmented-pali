{
"tha-ap128:1.1": "Therāpadāna",
"tha-ap128:2.1": "Sereyyavagga",
"tha-ap128:3.1": "6. Kusumāsaniyattheraapadāna",
"tha-ap128:4.1": "“Nagare dhaññavatiyā,",
"tha-ap128:4.2": "ahosiṃ brāhmaṇo tadā;",
"tha-ap128:4.3": "Lakkhaṇe itihāse ca,",
"tha-ap128:4.4": "sanighaṇḍusakeṭubhe.",
"tha-ap128:5.1": "Padako veyyākaraṇo,",
"tha-ap128:5.2": "nimittakovido ahaṃ;",
"tha-ap128:5.3": "Mante ca sisse vācesiṃ,",
"tha-ap128:5.4": "tiṇṇaṃ vedāna pāragū.",
"tha-ap128:6.1": "Pañca uppalahatthāni,",
"tha-ap128:6.2": "piṭṭhiyaṃ ṭhapitāni me;",
"tha-ap128:6.3": "Āhutiṃ yiṭṭhukāmohaṃ,",
"tha-ap128:6.4": "pitumātusamāgame.",
"tha-ap128:7.1": "Tadā vipassī bhagavā,",
"tha-ap128:7.2": "bhikkhusaṃghapurakkhato;",
"tha-ap128:7.3": "Obhāsento disā sabbā,",
"tha-ap128:7.4": "āgacchati narāsabho.",
"tha-ap128:8.1": "Āsanaṃ paññapetvāna,",
"tha-ap128:8.2": "nimantetvā mahāmuniṃ;",
"tha-ap128:8.3": "Santharitvāna taṃ pupphaṃ,",
"tha-ap128:8.4": "abhinesiṃ sakaṃ gharaṃ.",
"tha-ap128:9.1": "Yaṃ me atthi sake gehe,",
"tha-ap128:9.2": "āmisaṃ paccupaṭṭhitaṃ;",
"tha-ap128:9.3": "Tāhaṃ buddhassa pādāsiṃ,",
"tha-ap128:9.4": "pasanno sehi pāṇibhi.",
"tha-ap128:10.1": "Bhuttāviṃ kālamaññāya,",
"tha-ap128:10.2": "pupphahatthamadāsahaṃ;",
"tha-ap128:10.3": "Anumoditvāna sabbaññū,",
"tha-ap128:10.4": "pakkāmi uttarāmukho.",
"tha-ap128:11.1": "Ekanavutito kappe,",
"tha-ap128:11.2": "yaṃ pupphamadadiṃ tadā;",
"tha-ap128:11.3": "Duggatiṃ nābhijānāmi,",
"tha-ap128:11.4": "pupphadānassidaṃ phalaṃ.",
"tha-ap128:12.1": "Anantaraṃ ito kappe,",
"tha-ap128:12.2": "rājāhuṃ varadassano;",
"tha-ap128:12.3": "Sattaratanasampanno,",
"tha-ap128:12.4": "cakkavattī mahabbalo.",
"tha-ap128:13.1": "Paṭisambhidā catasso, … pe …",
"tha-ap128:13.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap128:14.1": "Itthaṃ sudaṃ āyasmā kusumāsaniyo thero imā gāthāyo abhāsitthāti.",
"tha-ap128:15.1": "Kusumāsaniyattherassāpadānaṃ chaṭṭhaṃ."
}