{
"tha-ap512:1.1": "Therāpadāna",
"tha-ap512:2.1": "Kaṇikāravagga",
"tha-ap512:3.1": "10 Nāḷikeraphaladāyakattheraapadāna",
"tha-ap512:4.1": "“Nagare bandhumatiyā,",
"tha-ap512:4.2": "ārāmiko ahaṃ tadā;",
"tha-ap512:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap512:4.4": "gacchantaṃ anilañjase.",
"tha-ap512:5.1": "Nāḷikeraphalaṃ gayha,",
"tha-ap512:5.2": "buddhaseṭṭhassadāsahaṃ;",
"tha-ap512:5.3": "Ākāse ṭhitako santo,",
"tha-ap512:5.4": "paṭiggaṇhi mahāyaso.",
"tha-ap512:6.1": "Vittisañjanano mayhaṃ,",
"tha-ap512:6.2": "diṭṭhadhammasukhāvaho;",
"tha-ap512:6.3": "Phalaṃ buddhassa datvāna,",
"tha-ap512:6.4": "vippasannena cetasā.",
"tha-ap512:7.1": "Adhigacchiṃ tadā pītiṃ,",
"tha-ap512:7.2": "vipulañca sukhuttamaṃ;",
"tha-ap512:7.3": "Uppajjateva ratanaṃ,",
"tha-ap512:7.4": "nibbattassa tahiṃ tahiṃ.",
"tha-ap512:8.1": "Ekanavutito kappe,",
"tha-ap512:8.2": "yaṃ phalaṃ adadiṃ tadā;",
"tha-ap512:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap512:8.4": "phaladānassidaṃ phalaṃ.",
"tha-ap512:9.1": "Dibbacakkhu visuddhaṃ me,",
"tha-ap512:9.2": "samādhikusalo ahaṃ;",
"tha-ap512:9.3": "Abhiññāpāramippatto,",
"tha-ap512:9.4": "phaladānassidaṃ phalaṃ.",
"tha-ap512:10.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap512:10.4": "viharāmi anāsavo.",
"tha-ap512:11.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap512:11.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap512:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap512:12.4": "kataṃ buddhassa sāsanaṃ”. #5366",
"tha-ap512:13.1": "Itthaṃ sudaṃ āyasmā nāḷikeraphaladāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap512:14.1": "Nāḷikeraphaladāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap512:15.1": "Kaṇikāravaggo ekapaññāsamo.",
"tha-ap512:16.1": "Tassuddānaṃ",
"tha-ap512:17.1": "Kaṇikārekapattā ca,",
"tha-ap512:17.2": "kāsumārī tathāvaṭā;",
"tha-ap512:17.3": "Pādañca mātuluṅgañca,",
"tha-ap512:17.4": "ajelīmodameva ca.",
"tha-ap512:18.1": "Tālaṃ tathā nāḷikeraṃ,",
"tha-ap512:18.2": "gāthāyo gaṇitā viha;",
"tha-ap512:18.3": "Ekaṃ gāthāsataṃ hoti,",
"tha-ap512:18.4": "ūnādhikavivajjitaṃ."
}