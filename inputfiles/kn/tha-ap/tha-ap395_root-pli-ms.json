{
"tha-ap395:1.1": "Therāpadāna",
"tha-ap395:2.1": "Pilindavacchavagga",
"tha-ap395:3.1": "3. Sabbakittikattheraapadāna",
"tha-ap395:4.1": "“Kaṇikāraṃva jalitaṃ,",
"tha-ap395:4.2": "dīparukkhaṃva ujjalaṃ;",
"tha-ap395:4.3": "Osadhiṃva virocantaṃ,",
"tha-ap395:4.4": "vijjutaṃ gagane yathā.",
"tha-ap395:5.1": "Asambhītaṃ anuttāsiṃ,",
"tha-ap395:5.2": "migarājaṃva kesariṃ;",
"tha-ap395:5.3": "Ñāṇālokaṃ pakāsentaṃ,",
"tha-ap395:5.4": "maddantaṃ titthiye gaṇe.",
"tha-ap395:6.1": "Uddharantaṃ imaṃ lokaṃ,",
"tha-ap395:6.2": "chindantaṃ sabbasaṃsayaṃ;",
"tha-ap395:6.3": "Gajjantaṃ migarājaṃva,",
"tha-ap395:6.4": "addasaṃ lokanāyakaṃ.",
"tha-ap395:7.1": "Jaṭājinadharo āsiṃ,",
"tha-ap395:7.2": "brahā uju patāpavā;",
"tha-ap395:7.3": "Vākacīraṃ gahetvāna,",
"tha-ap395:7.4": "pādamūle apatthariṃ.",
"tha-ap395:8.1": "Kāḷānusāriyaṃ gayha,",
"tha-ap395:8.2": "anulimpiṃ tathāgataṃ;",
"tha-ap395:8.3": "Sambuddhamanulimpetvā,",
"tha-ap395:8.4": "santhaviṃ lokanāyakaṃ.",
"tha-ap395:9.1": "‘Samuddharasimaṃ lokaṃ,",
"tha-ap395:9.2": "oghatiṇṇamahāmuni;",
"tha-ap395:9.3": "Ñāṇālokena jotesi,",
"tha-ap395:9.4": "nāvaṭaṃ ñāṇamuttamaṃ.",
"tha-ap395:10.1": "Dhammacakkaṃ pavattesi,",
"tha-ap395:10.2": "maddase paratitthiye;",
"tha-ap395:10.3": "Usabho jitasaṅgāmo,",
"tha-ap395:10.4": "sampakampesi medaniṃ.",
"tha-ap395:11.1": "Mahāsamudde ūmiyo,",
"tha-ap395:11.2": "velantamhi pabhijjare;",
"tha-ap395:11.3": "Tatheva tava ñāṇamhi,",
"tha-ap395:11.4": "sabbadiṭṭhī pabhijjare.",
"tha-ap395:12.1": "Sukhumacchikajālena,",
"tha-ap395:12.2": "saramhi sampatānite;",
"tha-ap395:12.3": "Antojālikatā pāṇā,",
"tha-ap395:12.4": "pīḷitā honti tāvade.",
"tha-ap395:13.1": "Tatheva titthiyā loke,",
"tha-ap395:13.2": "puthupāsaṇḍanissitā;",
"tha-ap395:13.3": "Antoñāṇavare tuyhaṃ,",
"tha-ap395:13.4": "parivattanti mārisa.",
"tha-ap395:14.1": "Patiṭṭhā vuyhataṃ oghe,",
"tha-ap395:14.2": "tvañhi nātho abandhunaṃ;",
"tha-ap395:14.3": "Bhayaṭṭitānaṃ saraṇaṃ,",
"tha-ap395:14.4": "muttitthīnaṃ parāyaṇaṃ.",
"tha-ap395:15.1": "Ekavīro asadiso,",
"tha-ap395:15.2": "mettākaruṇasañcayo;",
"tha-ap395:15.3": "Asamo susamo santo,",
"tha-ap395:15.4": "vasī tādī jitañjayo.",
"tha-ap395:16.1": "Dhīro vigatasammoho,",
"tha-ap395:16.2": "anejo akathaṃkathī;",
"tha-ap395:16.3": "Tusito vantadososi,",
"tha-ap395:16.4": "nimmalo saṃyato suci.",
"tha-ap395:17.1": "Saṅgātigo hatamado,",
"tha-ap395:17.2": "tevijjo tibhavantago;",
"tha-ap395:17.3": "Sīmātigo dhammagaru,",
"tha-ap395:17.4": "gatattho hitavabbhuto.",
"tha-ap395:18.1": "Tārako tvaṃ yathā nāvā,",
"tha-ap395:18.2": "nidhīvassāsakārako;",
"tha-ap395:18.3": "Asambhīto yathā sīho,",
"tha-ap395:18.4": "gajarājāva dappito’.",
"tha-ap395:19.1": "Thometvā dasagāthāhi,",
"tha-ap395:19.2": "padumuttaraṃ mahāyasaṃ;",
"tha-ap395:19.3": "Vanditvā satthuno pāde,",
"tha-ap395:19.4": "tuṇhī aṭṭhāsahaṃ tadā.",
"tha-ap395:20.1": "Padumuttaro lokavidū,",
"tha-ap395:20.2": "āhutīnaṃ paṭiggaho;",
"tha-ap395:20.3": "Bhikkhusaṃghe ṭhito satthā,",
"tha-ap395:20.4": "imā gāthā abhāsatha.",
"tha-ap395:21.1": "‘Yo me sīlañca ñāṇañca,",
"tha-ap395:21.2": "saddhammañcāpi vaṇṇayi;",
"tha-ap395:21.3": "Tamahaṃ kittayissāmi,",
"tha-ap395:21.4": "suṇātha mama bhāsato.",
"tha-ap395:22.1": "Saṭṭhi kappasahassāni,",
"tha-ap395:22.2": "devaloke ramissati;",
"tha-ap395:22.3": "Aññe devebhibhavitvā,",
"tha-ap395:22.4": "issaraṃ kārayissati.",
"tha-ap395:23.1": "So pacchā pabbajitvāna,",
"tha-ap395:23.2": "sukkamūlena codito;",
"tha-ap395:23.3": "Gotamassa bhagavato,",
"tha-ap395:23.4": "sāsane pabbajissati.",
"tha-ap395:24.1": "Pabbajitvāna kāyena,",
"tha-ap395:24.2": "pāpakammaṃ vivajjiya;",
"tha-ap395:24.3": "Sabbāsave pariññāya,",
"tha-ap395:24.4": "nibbāyissatināsavo’.",
"tha-ap395:25.1": "Yathāpi megho thanayaṃ,",
"tha-ap395:25.2": "tappeti mediniṃ imaṃ;",
"tha-ap395:25.3": "Tatheva tvaṃ mahāvīra,",
"tha-ap395:25.4": "dhammena tappayī mamaṃ.",
"tha-ap395:26.1": "Sīlaṃ paññañca dhammañca,",
"tha-ap395:26.2": "thavitvā lokanāyakaṃ;",
"tha-ap395:26.3": "Pattomhi paramaṃ santiṃ,",
"tha-ap395:26.4": "nibbānaṃ padamaccutaṃ.",
"tha-ap395:27.1": "Aho nūna sa bhagavā,",
"tha-ap395:27.2": "Ciraṃ tiṭṭheyya cakkhumā;",
"tha-ap395:27.3": "Aññātañca vijāneyyuṃ,",
"tha-ap395:27.4": "Phuseyyuṃ amataṃ padaṃ.",
"tha-ap395:28.1": "Ayaṃ me pacchimā jāti,",
"tha-ap395:28.2": "bhavā sabbe samūhatā;",
"tha-ap395:28.3": "Sabbāsave pariññāya,",
"tha-ap395:28.4": "viharāmi anāsavo.",
"tha-ap395:29.1": "Satasahassito kappe,",
"tha-ap395:29.2": "yaṃ buddhamabhithomayiṃ;",
"tha-ap395:29.3": "Duggatiṃ nābhijānāmi,",
"tha-ap395:29.4": "kittanāya idaṃ phalaṃ.",
"tha-ap395:30.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap395:30.2": "bhavā sabbe samūhatā;",
"tha-ap395:30.3": "Sabbāsavā parikkhīṇā,",
"tha-ap395:30.4": "natthi dāni punabbhavo.",
"tha-ap395:31.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap395:31.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap395:32.1": "Paṭisambhidā catasso, … pe …",
"tha-ap395:32.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap395:33.1": "Itthaṃ sudaṃ āyasmā sabbakittiko thero imā gāthāyo abhāsitthāti.",
"tha-ap395:34.1": "Sabbakittikattherassāpadānaṃ tatiyaṃ."
}