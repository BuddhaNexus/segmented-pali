{
"tha-ap502:1.1": "Therāpadāna",
"tha-ap502:2.1": "Kiṅkaṇipupphavagga",
"tha-ap502:3.1": "10. Piyālaphaladāyakattheraapadāna",
"tha-ap502:4.1": "“Migaluddo pure āsiṃ,",
"tha-ap502:4.2": "vipine vicaraṃ tadā;",
"tha-ap502:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap502:4.4": "sabbadhammāna pāraguṃ.",
"tha-ap502:5.1": "Piyālaphalamādāya,",
"tha-ap502:5.2": "buddhaseṭṭhassadāsahaṃ;",
"tha-ap502:5.3": "Puññakkhettassa vīrassa,",
"tha-ap502:5.4": "pasanno sehi pāṇibhi.",
"tha-ap502:6.1": "Ekatiṃse ito kappe,",
"tha-ap502:6.2": "yaṃ phalaṃ adadiṃ tadā;",
"tha-ap502:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap502:6.4": "phaladānassidaṃ phalaṃ.",
"tha-ap502:7.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap502:7.4": "viharāmi anāsavo.",
"tha-ap502:8.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap502:8.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap502:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap502:9.4": "kataṃ buddhassa sāsanaṃ”. #5267",
"tha-ap502:10.1": "Itthaṃ sudaṃ āyasmā piyālaphaladāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap502:11.1": "Piyālaphaladāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap502:12.1": "Kiṅkaṇipupphavaggo paññāsamo.",
"tha-ap502:13.1": "Tassuddānaṃ",
"tha-ap502:14.1": "Kiṅkaṇī paṃsukūlañca,",
"tha-ap502:14.2": "koraṇḍamatha kiṃsukaṃ;",
"tha-ap502:14.3": "Upaḍḍhadussī ghatado,",
"tha-ap502:14.4": "udakaṃ thūpakārako.",
"tha-ap502:15.1": "Naḷakārī ca navamo,",
"tha-ap502:15.2": "piyālaphaladāyako;",
"tha-ap502:15.3": "Satamekañca gāthānaṃ,",
"tha-ap502:15.4": "navakañca taduttari.",
"tha-ap502:16.1": "Atha vagguddānaṃ",
"tha-ap502:17.1": "Metteyyavaggo bhaddāli,",
"tha-ap502:17.2": "sakiṃsammajjakopi ca;",
"tha-ap502:17.3": "Ekavihārī vibhītakī,",
"tha-ap502:17.4": "jagatī sālapupphiyo.",
"tha-ap502:18.1": "Naḷāgāraṃ paṃsukūlaṃ,",
"tha-ap502:18.2": "kiṅkaṇipupphiyo tathā;",
"tha-ap502:18.3": "Asīti dve ca gāthāyo,",
"tha-ap502:18.4": "catuddasasatāni ca.",
"tha-ap502:19.1": "Metteyyavaggadasakaṃ.",
"tha-ap502:20.1": "Pañcamasatakaṃ samattaṃ."
}