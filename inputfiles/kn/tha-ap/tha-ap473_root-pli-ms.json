{
"tha-ap473:1.1": "Therāpadāna",
"tha-ap473:2.1": "Naḷamālivagga",
"tha-ap473:3.1": "1. Naḷamāliyattheraapadāna",
"tha-ap473:4.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
"tha-ap473:4.2": "Āhutīnaṃ paṭiggahaṃ;",
"tha-ap473:4.3": "Vipinaggena gacchantaṃ,",
"tha-ap473:4.4": "Addasaṃ lokanāyakaṃ.",
"tha-ap473:5.1": "Naḷamālaṃ gahetvāna,",
"tha-ap473:5.2": "nikkhamanto ca tāvade;",
"tha-ap473:5.3": "Tatthaddasāsiṃ sambuddhaṃ,",
"tha-ap473:5.4": "oghatiṇṇamanāsavaṃ.",
"tha-ap473:6.1": "Pasannacitto sumano,",
"tha-ap473:6.2": "naḷamālamapūjayiṃ;",
"tha-ap473:6.3": "Dakkhiṇeyyaṃ mahāvīraṃ,",
"tha-ap473:6.4": "sabbalokānukampakaṃ.",
"tha-ap473:7.1": "Ekatiṃse ito kappe,",
"tha-ap473:7.2": "yaṃ mālamabhiropayiṃ;",
"tha-ap473:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap473:7.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap473:8.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap473:8.2": "bhavā sabbe samūhatā;",
"tha-ap473:8.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap473:8.4": "viharāmi anāsavo.",
"tha-ap473:9.1": "Svāgataṃ vata me āsi,",
"tha-ap473:9.2": "mama buddhassa santike;",
"tha-ap473:9.3": "Tisso vijjā anuppattā,",
"tha-ap473:9.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap473:10.1": "Paṭisambhidā catasso,",
"tha-ap473:10.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap473:10.3": "Chaḷabhiññā sacchikatā,",
"tha-ap473:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap473:11.1": "Itthaṃ sudaṃ āyasmā naḷamāliyo thero imā gāthāyo abhāsitthāti.",
"tha-ap473:12.1": "Naḷamāliyattherassāpadānaṃ paṭhamaṃ."
}