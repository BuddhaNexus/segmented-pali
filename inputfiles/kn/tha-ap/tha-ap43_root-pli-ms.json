{
"tha-ap43:1.1": "Therāpadāna",
"tha-ap43:2.1": "Upālivagga",
"tha-ap43:3.1": "1 Bhāgineyyupālittheraapadāna",
"tha-ap43:4.1": "“Khīṇāsavasahassehi,",
"tha-ap43:4.2": "parivuto lokanāyako;",
"tha-ap43:4.3": "Vivekamanuyutto so,",
"tha-ap43:4.4": "gacchate paṭisallituṃ.",
"tha-ap43:5.1": "Ajinena nivatthohaṃ,",
"tha-ap43:5.2": "tidaṇḍaparidhārako;",
"tha-ap43:5.3": "Bhikkhusaṃghaparibyūḷhaṃ,",
"tha-ap43:5.4": "addasaṃ lokanāyakaṃ.",
"tha-ap43:6.1": "Ekaṃsaṃ ajinaṃ katvā,",
"tha-ap43:6.2": "sire katvāna añjaliṃ;",
"tha-ap43:6.3": "Sambuddhaṃ abhivādetvā,",
"tha-ap43:6.4": "santhaviṃ lokanāyakaṃ.",
"tha-ap43:7.1": "Yathāṇḍajā ca saṃsedā,",
"tha-ap43:7.2": "opapātī jalābujā;",
"tha-ap43:7.3": "Kākādipakkhino sabbe,",
"tha-ap43:7.4": "antalikkhacarā sadā.",
"tha-ap43:8.1": "‘Ye keci pāṇabhūtatthi,",
"tha-ap43:8.2": "saññino vā asaññino;",
"tha-ap43:8.3": "Sabbe te tava ñāṇamhi,",
"tha-ap43:8.4": "anto honti samogadhā.",
"tha-ap43:9.1": "Gandhā ca pabbateyyā ye,",
"tha-ap43:9.2": "himavantanaguttame;",
"tha-ap43:9.3": "Sabbe te tava sīlamhi,",
"tha-ap43:9.4": "kalāyapi na yujjare.",
"tha-ap43:10.1": "Mohandhakārapakkhando,",
"tha-ap43:10.2": "ayaṃ loko sadevako;",
"tha-ap43:10.3": "Tava ñāṇamhi jotante,",
"tha-ap43:10.4": "andhakārā vidhaṃsitā.",
"tha-ap43:11.1": "Yathā atthaṅgate sūriye,",
"tha-ap43:11.2": "honti sattā tamogatā;",
"tha-ap43:11.3": "Evaṃ buddhe anuppanne,",
"tha-ap43:11.4": "hoti loko tamogato.",
"tha-ap43:12.1": "Yathodayanto ādicco,",
"tha-ap43:12.2": "vinodeti tamaṃ sadā;",
"tha-ap43:12.3": "Tatheva tvaṃ buddhaseṭṭha,",
"tha-ap43:12.4": "viddhaṃsesi tamaṃ sadā.",
"tha-ap43:13.1": "Padhānapahitattosi,",
"tha-ap43:13.2": "buddho loke sadevake;",
"tha-ap43:13.3": "Tava kammābhiraddhena,",
"tha-ap43:13.4": "tosesi janataṃ bahuṃ’.",
"tha-ap43:14.1": "Taṃ sabbaṃ anumoditvā,",
"tha-ap43:14.2": "padumuttaro mahāmuni;",
"tha-ap43:14.3": "Nabhaṃ abbhuggamī dhīro,",
"tha-ap43:14.4": "haṃsarājāva ambare.",
"tha-ap43:15.1": "Abbhuggantvāna sambuddho,",
"tha-ap43:15.2": "mahesi padumuttaro;",
"tha-ap43:15.3": "Antalikkhe ṭhito satthā,",
"tha-ap43:15.4": "imā gāthā abhāsatha.",
"tha-ap43:16.1": "Yenidaṃ thavitaṃ ñāṇaṃ,",
"tha-ap43:16.2": "opammehi samāyutaṃ;",
"tha-ap43:16.3": "Tamahaṃ kittayissāmi,",
"tha-ap43:16.4": "suṇātha mama bhāsato.",
"tha-ap43:17.1": "‘Aṭṭhārasañca khattuṃ so,",
"tha-ap43:17.2": "devarājā bhavissati;",
"tha-ap43:17.3": "Pathabyā rajjaṃ tisataṃ,",
"tha-ap43:17.4": "vasudhaṃ āvasissati.",
"tha-ap43:18.1": "Pañcavīsatikkhattuñca,",
"tha-ap43:18.2": "cakkavattī bhavissati;",
"tha-ap43:18.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap43:18.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap43:19.1": "Kappasatasahassamhi,",
"tha-ap43:19.2": "okkākakulasambhavo;",
"tha-ap43:19.3": "Gotamo nāma gottena,",
"tha-ap43:19.4": "satthā loke bhavissati.",
"tha-ap43:20.1": "Tusitā hi cavitvāna,",
"tha-ap43:20.2": "sukkamūlena codito;",
"tha-ap43:20.3": "Hīnova jātiyā santo,",
"tha-ap43:20.4": "upāli nāma hessati.",
"tha-ap43:21.1": "So pacchā pabbajitvāna,",
"tha-ap43:21.2": "virājetvāna pāpakaṃ;",
"tha-ap43:21.3": "Sabbāsave pariññāya,",
"tha-ap43:21.4": "nibbāyissatināsavo.",
"tha-ap43:22.1": "Tuṭṭho ca gotamo buddho,",
"tha-ap43:22.2": "sakyaputto mahāyaso;",
"tha-ap43:22.3": "Vinayādhigataṃ tassa,",
"tha-ap43:22.4": "etadagge ṭhapessati’.",
"tha-ap43:23.1": "Saddhāyāhaṃ pabbajito,",
"tha-ap43:23.2": "katakicco anāsavo;",
"tha-ap43:23.3": "Sabbāsave pariññāya,",
"tha-ap43:23.4": "viharāmi anāsavo.",
"tha-ap43:24.1": "Bhagavā cānukampī maṃ,",
"tha-ap43:24.2": "vinayehaṃ visārado;",
"tha-ap43:24.3": "Sakakammābhiraddho ca,",
"tha-ap43:24.4": "viharāmi anāsavo.",
"tha-ap43:25.1": "Saṃvuto pātimokkhamhi,",
"tha-ap43:25.2": "indriyesu ca pañcasu;",
"tha-ap43:25.3": "Dhāremi vinayaṃ sabbaṃ,",
"tha-ap43:25.4": "kevalaṃ ratanākaraṃ.",
"tha-ap43:26.1": "Mamañca guṇamaññāya,",
"tha-ap43:26.2": "satthā loke anuttaro;",
"tha-ap43:26.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap43:26.4": "etadagge ṭhapesi maṃ.",
"tha-ap43:27.1": "Paṭisambhidā catasso,",
"tha-ap43:27.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap43:27.3": "Chaḷabhiññā sacchikatā,",
"tha-ap43:27.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap43:28.1": "Itthaṃ sudaṃ āyasmā upāli thero imā gāthāyo abhāsitthāti.",
"tha-ap43:29.1": "Bhāgineyyupālittherassāpadānaṃ paṭhamaṃ."
}