{
"tha-ap382:1.1": "Therāpadāna",
"tha-ap382:2.1": "Bodhivandanavagga",
"tha-ap382:3.1": "10. Kāsumāriphaladāyakattheraapadāna",
"tha-ap382:4.1": "“Kaṇikāraṃva jotantaṃ,",
"tha-ap382:4.2": "nisinnaṃ pabbatantare;",
"tha-ap382:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap382:4.4": "lokajeṭṭhaṃ narāsabhaṃ.",
"tha-ap382:5.1": "Pasannacitto sumano,",
"tha-ap382:5.2": "sire katvāna añjaliṃ;",
"tha-ap382:5.3": "Kāsumāriphalaṃ gayha,",
"tha-ap382:5.4": "buddhaseṭṭhassadāsahaṃ.",
"tha-ap382:6.1": "Ekattiṃse ito kappe,",
"tha-ap382:6.2": "yaṃ phalamadadiṃ ahaṃ;",
"tha-ap382:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap382:6.4": "phaladānassidaṃ phalaṃ.",
"tha-ap382:7.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap382:7.4": "viharāmi anāsavo.",
"tha-ap382:8.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap382:8.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap382:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap382:9.4": "kataṃ buddhassa sāsanaṃ”. #3271",
"tha-ap382:10.1": "Itthaṃ sudaṃ āyasmā kāsumāriphaladāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap382:11.1": "Kāsumāriphaladāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap382:12.1": "Bodhivandanavaggo aṭṭhatiṃsatimo.",
"tha-ap382:13.1": "Tassuddānaṃ",
"tha-ap382:14.1": "Bodhi pāṭali uppalī,",
"tha-ap382:14.2": "paṭṭi ca sattapaṇṇiyo;",
"tha-ap382:14.3": "Gandhamuṭṭhi ca citako,",
"tha-ap382:14.4": "tālaṃ sumanadāmako;",
"tha-ap382:14.5": "Kāsumāriphalī ceva,",
"tha-ap382:14.6": "gāthā ekūnasaṭṭhikā."
}