{
"tha-ap459:1.1": "Therāpadāna",
"tha-ap459:2.1": "Jagatidāyakavagga",
"tha-ap459:3.1": "7. Ekachattiyattheraapadāna",
"tha-ap459:4.1": "“Aṅgārajātā pathavī,",
"tha-ap459:4.2": "kukkuḷānugatā mahī;",
"tha-ap459:4.3": "Padumuttaro bhagavā,",
"tha-ap459:4.4": "abbhokāsamhi caṅkami.",
"tha-ap459:5.1": "Paṇḍaraṃ chattamādāya,",
"tha-ap459:5.2": "addhānaṃ paṭipajjahaṃ;",
"tha-ap459:5.3": "Tattha disvāna sambuddhaṃ,",
"tha-ap459:5.4": "vitti me upapajjatha.",
"tha-ap459:6.1": "Marīciyotthaṭā bhūmi,",
"tha-ap459:6.2": "aṅgārāva mahī ayaṃ;",
"tha-ap459:6.3": "Upahanti mahāvātā,",
"tha-ap459:6.4": "sarīrassāsukhepanā.",
"tha-ap459:7.1": "Sītaṃ uṇhaṃ vihanantaṃ,",
"tha-ap459:7.2": "vātātapanivāraṇaṃ;",
"tha-ap459:7.3": "Paṭiggaṇha imaṃ chattaṃ,",
"tha-ap459:7.4": "phassayissāmi nibbutiṃ.",
"tha-ap459:8.1": "Anukampako kāruṇiko,",
"tha-ap459:8.2": "padumuttaro mahāyaso;",
"tha-ap459:8.3": "Mama saṅkappamaññāya,",
"tha-ap459:8.4": "paṭiggaṇhi tadā jino.",
"tha-ap459:9.1": "Tiṃsa kappāni devindo,",
"tha-ap459:9.2": "devarajjamakārayiṃ;",
"tha-ap459:9.3": "Satānaṃ pañcakkhattuñca,",
"tha-ap459:9.4": "cakkavattī ahosahaṃ.",
"tha-ap459:10.1": "Padesarajjaṃ vipulaṃ,",
"tha-ap459:10.2": "gaṇanāto asaṅkhiyaṃ;",
"tha-ap459:10.3": "Anubhomi sakaṃ kammaṃ,",
"tha-ap459:10.4": "pubbe sukatamattano.",
"tha-ap459:11.1": "Ayaṃ me pacchimā jāti,",
"tha-ap459:11.2": "carimo vattate bhavo;",
"tha-ap459:11.3": "Ajjāpi setacchattaṃ me,",
"tha-ap459:11.4": "sabbakālaṃ dharīyati.",
"tha-ap459:12.1": "Satasahassito kappe,",
"tha-ap459:12.2": "yaṃ chattamadadiṃ tadā;",
"tha-ap459:12.3": "Duggatiṃ nābhijānāmi,",
"tha-ap459:12.4": "chattadānassidaṃ phalaṃ.",
"tha-ap459:13.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap459:13.4": "viharāmi anāsavo.",
"tha-ap459:14.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap459:14.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap459:15.1": "Paṭisambhidā catasso, … pe …",
"tha-ap459:15.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap459:16.1": "Itthaṃ sudaṃ āyasmā ekachattiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap459:17.1": "Ekachattiyattherassāpadānaṃ sattamaṃ."
}