{
"tha-ap59:1.1": "Therāpadāna",
"tha-ap59:2.1": "Bījanivagga",
"tha-ap59:3.1": "7. Pañcadīpakattheraapadāna",
"tha-ap59:4.1": "“Padumuttarabuddhassa,",
"tha-ap59:4.2": "sabbabhūtānukampino;",
"tha-ap59:4.3": "Saddahitvāna saddhamme,",
"tha-ap59:4.4": "ujudiṭṭhi ahosahaṃ.",
"tha-ap59:5.1": "Padīpadānaṃ pādāsiṃ,",
"tha-ap59:5.2": "parivāretvāna bodhiyaṃ;",
"tha-ap59:5.3": "Saddahanto padīpāni,",
"tha-ap59:5.4": "akariṃ tāvade ahaṃ.",
"tha-ap59:6.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap59:6.2": "devattaṃ atha mānusaṃ;",
"tha-ap59:6.3": "Ākāse ukkaṃ dhārenti,",
"tha-ap59:6.4": "dīpadānassidaṃ phalaṃ.",
"tha-ap59:7.1": "Tirokuṭṭaṃ tiroselaṃ,",
"tha-ap59:7.2": "samatiggayha pabbataṃ;",
"tha-ap59:7.3": "Samantā yojanasataṃ,",
"tha-ap59:7.4": "dassanaṃ anubhomahaṃ.",
"tha-ap59:8.1": "Tena kammāvasesena,",
"tha-ap59:8.2": "pattomhi āsavakkhayaṃ;",
"tha-ap59:8.3": "Dhāremi antimaṃ dehaṃ,",
"tha-ap59:8.4": "dvipadindassa sāsane.",
"tha-ap59:9.1": "Catuttiṃse kappasate,",
"tha-ap59:9.2": "satacakkhusanāmakā;",
"tha-ap59:9.3": "Rājāhesuṃ mahātejā,",
"tha-ap59:9.4": "cakkavattī mahabbalā.",
"tha-ap59:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap59:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap59:11.1": "Itthaṃ sudaṃ āyasmā pañcadīpako thero imā gāthāyo abhāsitthāti.",
"tha-ap59:12.1": "Pañcadīpakattherassāpadānaṃ sattamaṃ."
}