{
"tha-ap119:1.1": "Therāpadāna",
"tha-ap119:2.1": "Mahāparivāravagga",
"tha-ap119:3.1": "7. Buddhasaññakattheraapadāna",
"tha-ap119:4.1": "“Yadā vipassī lokaggo,",
"tha-ap119:4.2": "āyusaṅkhāramossaji;",
"tha-ap119:4.3": "Pathavī sampakampittha,",
"tha-ap119:4.4": "medanī jalamekhalā.",
"tha-ap119:5.1": "Otataṃ vitthataṃ mayhaṃ,",
"tha-ap119:5.2": "suvicittavaṭaṃsakaṃ;",
"tha-ap119:5.3": "Bhavanampi pakampittha,",
"tha-ap119:5.4": "buddhassa āyusaṅkhaye.",
"tha-ap119:6.1": "Tāso mayhaṃ samuppanno,",
"tha-ap119:6.2": "bhavane sampakampite;",
"tha-ap119:6.3": "Uppādo nu kimatthāya,",
"tha-ap119:6.4": "āloko vipulo ahu.",
"tha-ap119:7.1": "Vessavaṇo idhāgamma,",
"tha-ap119:7.2": "nibbāpesi mahājanaṃ;",
"tha-ap119:7.3": "Pāṇabhūte bhayaṃ natthi,",
"tha-ap119:7.4": "ekaggā hotha saṃvutā.",
"tha-ap119:8.1": "Aho buddhā aho dhammā,",
"tha-ap119:8.2": "aho no satthu sampadā;",
"tha-ap119:8.3": "Yasmiṃ uppajjamānamhi,",
"tha-ap119:8.4": "pathavī sampakampati.",
"tha-ap119:9.1": "Buddhānubhāvaṃ kittetvā,",
"tha-ap119:9.2": "kappaṃ saggamhi modahaṃ;",
"tha-ap119:9.3": "Avasesesu kappesu,",
"tha-ap119:9.4": "kusalaṃ caritaṃ mayā.",
"tha-ap119:10.1": "Ekanavutito kappe,",
"tha-ap119:10.2": "yaṃ saññamalabhiṃ tadā;",
"tha-ap119:10.3": "Duggatiṃ nābhijānāmi,",
"tha-ap119:10.4": "buddhasaññāyidaṃ phalaṃ.",
"tha-ap119:11.1": "Ito cuddasakappamhi,",
"tha-ap119:11.2": "rājā āsiṃ patāpavā;",
"tha-ap119:11.3": "Samito nāma nāmena,",
"tha-ap119:11.4": "cakkavattī mahabbalo.",
"tha-ap119:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap119:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap119:13.1": "Itthaṃ sudaṃ āyasmā buddhasaññako thero imā gāthāyo abhāsitthāti.",
"tha-ap119:14.1": "Buddhasaññakattherassāpadānaṃ sattamaṃ."
}