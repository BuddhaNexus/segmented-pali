{
"tha-ap252:1.1": "Therāpadāna",
"tha-ap252:2.1": "Tuvaradāyakavagga",
"tha-ap252:3.1": "10 Uddālakadāyakattheraapadāna",
"tha-ap252:4.1": "“Kakudho nāma nāmena,",
"tha-ap252:4.2": "sayambhū aparājito;",
"tha-ap252:4.3": "Pavanā nikkhamitvāna,",
"tha-ap252:4.4": "anuppatto mahānadiṃ.",
"tha-ap252:5.1": "Uddālakaṃ gahetvāna,",
"tha-ap252:5.2": "sayambhussa adāsahaṃ;",
"tha-ap252:5.3": "Saṃyatassujubhūtassa,",
"tha-ap252:5.4": "pasannamānaso ahaṃ.",
"tha-ap252:6.1": "Ekattiṃse ito kappe,",
"tha-ap252:6.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap252:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap252:6.4": "pupphadānassidaṃ phalaṃ.",
"tha-ap252:7.1": "Paṭisambhidā catasso, … pe …",
"tha-ap252:7.4": "kataṃ buddhassa sāsanaṃ”. #2494",
"tha-ap252:8.1": "Itthaṃ sudaṃ āyasmā uddālakadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap252:9.1": "Uddālakadāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap252:10.1": "Tuvaradāyakavaggo pañcavīsatimo.",
"tha-ap252:11.1": "Tassuddānaṃ",
"tha-ap252:12.1": "Tuvaranāganaḷinā,",
"tha-ap252:12.2": "viravī kuṭidhūpako;",
"tha-ap252:12.3": "Patto dhātusattaliyo,",
"tha-ap252:12.4": "bimbi uddālakena ca;",
"tha-ap252:12.5": "Sattatiṃsati gāthāyo,",
"tha-ap252:12.6": "gaṇitāyo vibhāvibhi."
}