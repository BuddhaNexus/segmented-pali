{
"tha-ap340:1.1": "Therāpadāna",
"tha-ap340:2.1": "Gandhodakavagga",
"tha-ap340:3.1": "8. Uttareyyadāyakattheraapadāna",
"tha-ap340:4.1": "“Nagare haṃsavatiyā,",
"tha-ap340:4.2": "ahosiṃ brāhmaṇo tadā;",
"tha-ap340:4.3": "Ajjhāyako mantadharo,",
"tha-ap340:4.4": "tiṇṇaṃ vedāna pāragū.",
"tha-ap340:5.1": "Purakkhato sasissehi,",
"tha-ap340:5.2": "jātimā ca susikkhito;",
"tha-ap340:5.3": "Toyābhisecanatthāya,",
"tha-ap340:5.4": "nagarā nikkhamiṃ tadā.",
"tha-ap340:6.1": "Padumuttaro nāma jino,",
"tha-ap340:6.2": "sabbadhammāna pāragū;",
"tha-ap340:6.3": "Khīṇāsavasahassehi,",
"tha-ap340:6.4": "pāvisī nagaraṃ jino.",
"tha-ap340:7.1": "Sucārurūpaṃ disvāna,",
"tha-ap340:7.2": "āneñjakāritaṃ viya;",
"tha-ap340:7.3": "Parivutaṃ arahantehi,",
"tha-ap340:7.4": "disvā cittaṃ pasādayiṃ.",
"tha-ap340:8.1": "Sirasmiṃ añjaliṃ katvā,",
"tha-ap340:8.2": "namassitvāna subbataṃ;",
"tha-ap340:8.3": "Pasannacitto sumano,",
"tha-ap340:8.4": "uttarīyamadāsahaṃ.",
"tha-ap340:9.1": "Ubho hatthehi paggayha,",
"tha-ap340:9.2": "sāṭakaṃ ukkhipiṃ ahaṃ;",
"tha-ap340:9.3": "Yāvatā buddhaparisā,",
"tha-ap340:9.4": "tāva chādesi sāṭako.",
"tha-ap340:10.1": "Piṇḍacāraṃ carantassa,",
"tha-ap340:10.2": "mahābhikkhugaṇādino;",
"tha-ap340:10.3": "Chadaṃ karonto aṭṭhāsi,",
"tha-ap340:10.4": "hāsayanto mamaṃ tadā.",
"tha-ap340:11.1": "Gharato nikkhamantassa,",
"tha-ap340:11.2": "sayambhū aggapuggalo;",
"tha-ap340:11.3": "Vīthiyaṃva ṭhito satthā,",
"tha-ap340:11.4": "akā me anumodanaṃ.",
"tha-ap340:12.1": "Pasannacitto sumano,",
"tha-ap340:12.2": "yo me adāsi sāṭakaṃ;",
"tha-ap340:12.3": "Tamahaṃ kittayissāmi,",
"tha-ap340:12.4": "suṇotha mama bhāsato.",
"tha-ap340:13.1": "‘Tiṃsakappasahassāni,",
"tha-ap340:13.2": "devaloke ramissati;",
"tha-ap340:13.3": "Paññāsakkhattuṃ devindo,",
"tha-ap340:13.4": "devarajjaṃ karissati.",
"tha-ap340:14.1": "Devaloke vasantassa,",
"tha-ap340:14.2": "puññakammasamaṅgino;",
"tha-ap340:14.3": "Samantā yojanasataṃ,",
"tha-ap340:14.4": "dussacchannaṃ bhavissati.",
"tha-ap340:15.1": "Chattiṃsakkhattuṃ rājā ca,",
"tha-ap340:15.2": "cakkavattī bhavissati;",
"tha-ap340:15.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap340:15.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap340:16.1": "Bhave saṃsaramānassa,",
"tha-ap340:16.2": "puññakammasamaṅgino;",
"tha-ap340:16.3": "Manasā patthitaṃ sabbaṃ,",
"tha-ap340:16.4": "nibbattissati tāvade.",
"tha-ap340:17.1": "Koseyyakambaliyāni,",
"tha-ap340:17.2": "khomakappāsikāni ca;",
"tha-ap340:17.3": "Mahagghāni ca dussāni,",
"tha-ap340:17.4": "paṭilacchatiyaṃ naro.",
"tha-ap340:18.1": "Manasā patthitaṃ sabbaṃ,",
"tha-ap340:18.2": "paṭilacchatiyaṃ naro;",
"tha-ap340:18.3": "Ekadussassa vipākaṃ,",
"tha-ap340:18.4": "anubhossati sabbadā.",
"tha-ap340:19.1": "So pacchā pabbajitvāna,",
"tha-ap340:19.2": "sukkamūlena codito;",
"tha-ap340:19.3": "Gotamassa bhagavato,",
"tha-ap340:19.4": "dhammaṃ sacchikarissati’.",
"tha-ap340:20.1": "Aho me sukataṃ kammaṃ,",
"tha-ap340:20.2": "sabbaññussa mahesino;",
"tha-ap340:20.3": "Ekāhaṃ sāṭakaṃ datvā,",
"tha-ap340:20.4": "pattomhi amataṃ padaṃ.",
"tha-ap340:21.1": "Maṇḍape rukkhamūle vā,",
"tha-ap340:21.2": "vasato suññake ghare;",
"tha-ap340:21.3": "Dhāreti dussachadanaṃ,",
"tha-ap340:21.4": "samantā byāmato mama.",
"tha-ap340:22.1": "Aviññattaṃ nivāsemi,",
"tha-ap340:22.2": "cīvaraṃ paccayañcahaṃ;",
"tha-ap340:22.3": "Lābhī annassa pānassa,",
"tha-ap340:22.4": "uttareyyassidaṃ phalaṃ.",
"tha-ap340:23.1": "Satasahassito kappe,",
"tha-ap340:23.2": "yaṃ kammamakariṃ tadā;",
"tha-ap340:23.3": "Duggatiṃ nābhijānāmi,",
"tha-ap340:23.4": "vatthadānassidaṃ phalaṃ.",
"tha-ap340:24.1": "Paṭisambhidā catasso, … pe …",
"tha-ap340:24.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap340:25.1": "Itthaṃ sudaṃ āyasmā uttareyyadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap340:26.1": "Uttareyyadāyakattherassāpadānaṃ aṭṭhamaṃ."
}