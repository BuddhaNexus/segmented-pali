{
"tha-ap500:1.1": "Therāpadāna",
"tha-ap500:2.1": "Kiṅkaṇipupphavagga",
"tha-ap500:3.1": "8 Pulinathūpiyattheraapadāna",
"tha-ap500:4.1": "“Himavantassāvidūre,",
"tha-ap500:4.2": "yamako nāma pabbato;",
"tha-ap500:4.3": "Assamo sukato mayhaṃ,",
"tha-ap500:4.4": "paṇṇasālā sumāpitā.",
"tha-ap500:5.1": "Nārado nāma nāmena,",
"tha-ap500:5.2": "jaṭilo uggatāpano;",
"tha-ap500:5.3": "Catuddasasahassāni,",
"tha-ap500:5.4": "sissā paricaranti maṃ.",
"tha-ap500:6.1": "Paṭisallīnako santo,",
"tha-ap500:6.2": "evaṃ cintesahaṃ tadā;",
"tha-ap500:6.3": "‘Sabbo jano maṃ pūjeti,",
"tha-ap500:6.4": "nāhaṃ pūjemi kiñcanaṃ.",
"tha-ap500:7.1": "Na me ovādako atthi,",
"tha-ap500:7.2": "vattā koci na vijjati;",
"tha-ap500:7.3": "Anācariyupajjhāyo,",
"tha-ap500:7.4": "vane vāsaṃ upemahaṃ.",
"tha-ap500:8.1": "Upāsamāno yamahaṃ,",
"tha-ap500:8.2": "garucittaṃ upaṭṭhahe;",
"tha-ap500:8.3": "So me ācariyo natthi,",
"tha-ap500:8.4": "vanavāso niratthako.",
"tha-ap500:9.1": "Āyāgaṃ me gavesissaṃ,",
"tha-ap500:9.2": "garuṃ bhāvaniyaṃ tathā;",
"tha-ap500:9.3": "Sāvassayo vasissāmi,",
"tha-ap500:9.4": "na koci garahissati’.",
"tha-ap500:10.1": "Uttānakūlā nadikā,",
"tha-ap500:10.2": "supatitthā manoramā;",
"tha-ap500:10.3": "Saṃsuddhapulinākiṇṇā,",
"tha-ap500:10.4": "avidūre mamassamaṃ.",
"tha-ap500:11.1": "Nadiṃ amarikaṃ nāma,",
"tha-ap500:11.2": "upagantvānahaṃ tadā;",
"tha-ap500:11.3": "Saṃvaḍḍhayitvā pulinaṃ,",
"tha-ap500:11.4": "akaṃ pulinacetiyaṃ.",
"tha-ap500:12.1": "Ye te ahesuṃ sambuddhā,",
"tha-ap500:12.2": "bhavantakaraṇā munī;",
"tha-ap500:12.3": "Tesaṃ etādiso thūpo,",
"tha-ap500:12.4": "taṃ nimittaṃ karomahaṃ.",
"tha-ap500:13.1": "Karitvā pulinaṃ thūpaṃ,",
"tha-ap500:13.2": "sovaṇṇaṃ māpayiṃ ahaṃ;",
"tha-ap500:13.3": "Soṇṇakiṅkaṇipupphāni,",
"tha-ap500:13.4": "sahasse tīṇi pūjayiṃ.",
"tha-ap500:14.1": "Sāyaṃ pātaṃ namassāmi,",
"tha-ap500:14.2": "vedajāto katañjalī;",
"tha-ap500:14.3": "Sammukhā viya sambuddhaṃ,",
"tha-ap500:14.4": "vandiṃ pulinacetiyaṃ.",
"tha-ap500:15.1": "Yadā kilesā jāyanti,",
"tha-ap500:15.2": "vitakkā gehanissitā;",
"tha-ap500:15.3": "Sarāmi sukataṃ thūpaṃ,",
"tha-ap500:15.4": "paccavekkhāmi tāvade.",
"tha-ap500:16.1": "Upanissāya viharaṃ,",
"tha-ap500:16.2": "satthavāhaṃ vināyakaṃ;",
"tha-ap500:16.3": "Kilese saṃvaseyyāsi,",
"tha-ap500:16.4": "na yuttaṃ tava mārisa.",
"tha-ap500:17.1": "Saha āvajjite thūpe,",
"tha-ap500:17.2": "gāravaṃ hoti me tadā;",
"tha-ap500:17.3": "Kuvitakke vinodesiṃ,",
"tha-ap500:17.4": "nāgo tuttaṭṭito yathā.",
"tha-ap500:18.1": "Evaṃ viharamānaṃ maṃ,",
"tha-ap500:18.2": "maccurājābhimaddatha;",
"tha-ap500:18.3": "Tattha kālaṅkato santo,",
"tha-ap500:18.4": "brahmalokamagacchahaṃ.",
"tha-ap500:19.1": "Yāvatāyuṃ vasitvāna,",
"tha-ap500:19.2": "tidive upapajjahaṃ;",
"tha-ap500:19.3": "Asītikkhattuṃ devindo,",
"tha-ap500:19.4": "devarajjamakārayiṃ.",
"tha-ap500:20.1": "Satānaṃ tīṇikkhattuñca,",
"tha-ap500:20.2": "cakkavattī ahosahaṃ;",
"tha-ap500:20.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap500:20.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap500:21.1": "Soṇṇakiṅkaṇipupphānaṃ,",
"tha-ap500:21.2": "vipākaṃ anubhomahaṃ;",
"tha-ap500:21.3": "Dhātīsatasahassāni,",
"tha-ap500:21.4": "parivārenti maṃ bhave.",
"tha-ap500:22.1": "Thūpassa pariciṇṇattā,",
"tha-ap500:22.2": "rajojallaṃ na limpati;",
"tha-ap500:22.3": "Gatte sedā na muccanti,",
"tha-ap500:22.4": "suppabhāso bhavāmahaṃ.",
"tha-ap500:23.1": "Aho me sukato thūpo,",
"tha-ap500:23.2": "sudiṭṭhā marikā nadī;",
"tha-ap500:23.3": "Thūpaṃ katvāna pulinaṃ,",
"tha-ap500:23.4": "pattomhi acalaṃ padaṃ.",
"tha-ap500:24.1": "Kusalaṃ kattukāmena,",
"tha-ap500:24.2": "jantunā sāragāhinā;",
"tha-ap500:24.3": "Natthi khettaṃ akhettaṃ vā,",
"tha-ap500:24.4": "paṭipattīva sādhakā.",
"tha-ap500:25.1": "Yathāpi balavā poso,",
"tha-ap500:25.2": "aṇṇavaṃ taritussahe;",
"tha-ap500:25.3": "Parittaṃ kaṭṭhamādāya,",
"tha-ap500:25.4": "pakkhandeyya mahāsaraṃ.",
"tha-ap500:26.1": "Imāhaṃ kaṭṭhaṃ nissāya,",
"tha-ap500:26.2": "tarissāmi mahodadhiṃ;",
"tha-ap500:26.3": "Ussāhena vīriyena,",
"tha-ap500:26.4": "tareyya udadhiṃ naro.",
"tha-ap500:27.1": "Tatheva me kataṃ kammaṃ,",
"tha-ap500:27.2": "parittaṃ thokakañca yaṃ;",
"tha-ap500:27.3": "Taṃ kammaṃ upanissāya,",
"tha-ap500:27.4": "saṃsāraṃ samatikkamiṃ.",
"tha-ap500:28.1": "Pacchime bhave sampatte,",
"tha-ap500:28.2": "sukkamūlena codito;",
"tha-ap500:28.3": "Sāvatthiyaṃ pure jāto,",
"tha-ap500:28.4": "mahāsāle suaḍḍhake.",
"tha-ap500:29.1": "Saddhā mātā pitā mayhaṃ,",
"tha-ap500:29.2": "buddhassa saraṇaṃ gatā;",
"tha-ap500:29.3": "Ubho diṭṭhapadā ete,",
"tha-ap500:29.4": "anuvattanti sāsanaṃ.",
"tha-ap500:30.1": "Bodhipapaṭikaṃ gayha,",
"tha-ap500:30.2": "soṇṇathūpamakārayuṃ;",
"tha-ap500:30.3": "Sāyaṃ pātaṃ namassanti,",
"tha-ap500:30.4": "sakyaputtassa sammukhā.",
"tha-ap500:31.1": "Uposathamhi divase,",
"tha-ap500:31.2": "soṇṇathūpaṃ vinīharuṃ;",
"tha-ap500:31.3": "Buddhassa vaṇṇaṃ kittentā,",
"tha-ap500:31.4": "tiyāmaṃ vītināmayuṃ.",
"tha-ap500:32.1": "Saha disvānahaṃ thūpaṃ,",
"tha-ap500:32.2": "sariṃ pulinacetiyaṃ;",
"tha-ap500:32.3": "Ekāsane nisīditvā,",
"tha-ap500:32.4": "arahattamapāpuṇiṃ.",
"tha-ap500:33.1": "Dvāvīsatimaṃ bhāṇavāraṃ.",
"tha-ap500:34.1": "Gavesamāno taṃ vīraṃ,",
"tha-ap500:34.2": "dhammasenāpatiddasaṃ;",
"tha-ap500:34.3": "Agārā nikkhamitvāna,",
"tha-ap500:34.4": "pabbajiṃ tassa santike.",
"tha-ap500:35.1": "Jātiyā sattavassena,",
"tha-ap500:35.2": "arahattamapāpuṇiṃ;",
"tha-ap500:35.3": "Upasampādayī buddho,",
"tha-ap500:35.4": "guṇamaññāya cakkhumā.",
"tha-ap500:36.1": "Dārakeneva santena,",
"tha-ap500:36.2": "kiriyaṃ niṭṭhitaṃ mayā;",
"tha-ap500:36.3": "Kataṃ me karaṇīyajja,",
"tha-ap500:36.4": "sakyaputtassa sāsane.",
"tha-ap500:37.1": "Sabbaverabhayātīto,",
"tha-ap500:37.2": "sabbasaṅgātigo isi;",
"tha-ap500:37.3": "Sāvako te mahāvīra,",
"tha-ap500:37.4": "soṇṇathūpassidaṃ phalaṃ.",
"tha-ap500:38.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap500:38.4": "viharāmi anāsavo.",
"tha-ap500:39.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap500:39.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap500:40.1": "Paṭisambhidā catasso, … pe …",
"tha-ap500:40.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap500:41.1": "Itthaṃ sudaṃ āyasmā pulinathūpiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap500:42.1": "Pulinathūpiyattherassāpadānaṃ aṭṭhamaṃ."
}