{
"tha-ap321:1.1": "Therāpadāna",
"tha-ap321:2.1": "Ārakkhadāyakavagga",
"tha-ap321:3.1": "9 Kandalipupphiyattheraapadāna",
"tha-ap321:4.1": "“Sindhuyā nadiyā tīre,",
"tha-ap321:4.2": "ahosiṃ kassako tadā;",
"tha-ap321:4.3": "Parakammāyane yutto,",
"tha-ap321:4.4": "parabhattaṃ apassito.",
"tha-ap321:5.1": "Sindhuṃ anucarantohaṃ,",
"tha-ap321:5.2": "siddhatthaṃ jinamaddasaṃ;",
"tha-ap321:5.3": "Samādhinā nisinnaṃva,",
"tha-ap321:5.4": "satapattaṃva pupphitaṃ.",
"tha-ap321:6.1": "Satta kandalipupphāni,",
"tha-ap321:6.2": "vaṇṭe chetvānahaṃ tadā;",
"tha-ap321:6.3": "Matthake abhiropesiṃ,",
"tha-ap321:6.4": "buddhassādiccabandhuno.",
"tha-ap321:7.1": "Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
"tha-ap321:7.2": "Anukūle samāhitaṃ;",
"tha-ap321:7.3": "Tidhāpabhinnamātaṅgaṃ,",
"tha-ap321:7.4": "Kuñjaraṃva durāsadaṃ.",
"tha-ap321:8.1": "Tamahaṃ upagantvāna,",
"tha-ap321:8.2": "nipakaṃ bhāvitindriyaṃ;",
"tha-ap321:8.3": "Añjaliṃ paggahetvāna,",
"tha-ap321:8.4": "avandiṃ satthuno ahaṃ.",
"tha-ap321:9.1": "Catunnavutito kappe,",
"tha-ap321:9.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap321:9.3": "Duggatiṃ nābhijānāmi,",
"tha-ap321:9.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap321:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap321:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap321:11.1": "Itthaṃ sudaṃ āyasmā kandalipupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap321:12.1": "Kandalipupphiyattherassāpadānaṃ navamaṃ."
}