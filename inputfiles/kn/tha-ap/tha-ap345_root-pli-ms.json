{
"tha-ap345:1.1": "Therāpadāna",
"tha-ap345:2.1": "Ekapadumiyavagga",
"tha-ap345:3.1": "3. Dhajadāyakattheraapadāna",
"tha-ap345:4.1": "“Tisso nāma ahu satthā,",
"tha-ap345:4.2": "lokajeṭṭho narāsabho;",
"tha-ap345:4.3": "Tayopadhikkhaye disvā,",
"tha-ap345:4.4": "dhajaṃ āropitaṃ mayā.",
"tha-ap345:5.1": "Tena kammena sukatena,",
"tha-ap345:5.2": "cetanāpaṇidhīhi ca;",
"tha-ap345:5.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap345:5.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap345:6.1": "Satānaṃ tīṇikkhattuñca,",
"tha-ap345:6.2": "devarajjaṃ akārayiṃ;",
"tha-ap345:6.3": "Satānaṃ pañcakkhattuñca,",
"tha-ap345:6.4": "cakkavattī ahosahaṃ.",
"tha-ap345:7.1": "Padesarajjaṃ vipulaṃ,",
"tha-ap345:7.2": "gaṇanāto asaṅkhiyaṃ;",
"tha-ap345:7.3": "Anubhomi sakaṃ kammaṃ,",
"tha-ap345:7.4": "pubbe sukatamattano.",
"tha-ap345:8.1": "Dvenavute ito kappe,",
"tha-ap345:8.2": "yaṃ kammamakariṃ tadā;",
"tha-ap345:8.3": "Duggatiṃ nābhijānāmi,",
"tha-ap345:8.4": "dhajadānassidaṃ phalaṃ.",
"tha-ap345:9.1": "Icchamāno cahaṃ ajja,",
"tha-ap345:9.2": "sakānanaṃ sapabbataṃ;",
"tha-ap345:9.3": "Khomadussena chādeyyaṃ,",
"tha-ap345:9.4": "tadā mayhaṃ kate phalaṃ.",
"tha-ap345:10.1": "Paṭisambhidā catasso, … pe …",
"tha-ap345:10.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap345:11.1": "Itthaṃ sudaṃ āyasmā dhajadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap345:12.1": "Dhajadāyakattherassāpadānaṃ tatiyaṃ."
}