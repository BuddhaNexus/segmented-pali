{
"tha-ap423:1.1": "Therāpadāna",
"tha-ap423:2.1": "Sakiṃsammajjakavagga",
"tha-ap423:3.1": "1. Sakiṃsammajjakattheraapadāna",
"tha-ap423:4.1": "“Vipassino bhagavato,",
"tha-ap423:4.2": "pāṭaliṃ bodhimuttamaṃ;",
"tha-ap423:4.3": "Disvāva taṃ pādapaggaṃ,",
"tha-ap423:4.4": "tattha cittaṃ pasādayiṃ.",
"tha-ap423:5.1": "Sammajjaniṃ gahetvāna,",
"tha-ap423:5.2": "bodhiṃ sammajji tāvade;",
"tha-ap423:5.3": "Sammajjitvāna taṃ bodhiṃ,",
"tha-ap423:5.4": "avandiṃ pāṭaliṃ ahaṃ.",
"tha-ap423:6.1": "Tattha cittaṃ pasādetvā,",
"tha-ap423:6.2": "sire katvāna añjaliṃ;",
"tha-ap423:6.3": "Namassamāno taṃ bodhiṃ,",
"tha-ap423:6.4": "gañchiṃ paṭikuṭiṃ ahaṃ.",
"tha-ap423:7.1": "Tādimaggena gacchāmi,",
"tha-ap423:7.2": "saranto bodhimuttamaṃ;",
"tha-ap423:7.3": "Ajagaro maṃ pīḷesi,",
"tha-ap423:7.4": "ghorarūpo mahabbalo.",
"tha-ap423:8.1": "Āsanne me kataṃ kammaṃ,",
"tha-ap423:8.2": "phalena tosayī mamaṃ;",
"tha-ap423:8.3": "Kaḷevaraṃ me gilati,",
"tha-ap423:8.4": "devaloke ramāmahaṃ.",
"tha-ap423:9.1": "Anāvilaṃ mama cittaṃ,",
"tha-ap423:9.2": "visuddhaṃ paṇḍaraṃ sadā;",
"tha-ap423:9.3": "Sokasallaṃ na jānāmi,",
"tha-ap423:9.4": "cittasantāpanaṃ mama.",
"tha-ap423:10.1": "Kuṭṭhaṃ gaṇḍo kilāso ca,",
"tha-ap423:10.2": "apamāro vitacchikā;",
"tha-ap423:10.3": "Daddu kaṇḍu ca me natthi,",
"tha-ap423:10.4": "phalaṃ sammajjanāyidaṃ.",
"tha-ap423:11.1": "Soko ca paridevo ca,",
"tha-ap423:11.2": "hadaye me na vijjati;",
"tha-ap423:11.3": "Abhantaṃ ujukaṃ cittaṃ,",
"tha-ap423:11.4": "phalaṃ sammajjanāyidaṃ.",
"tha-ap423:12.1": "Samādhīsu na majjāmi,",
"tha-ap423:12.2": "visadaṃ hoti mānasaṃ;",
"tha-ap423:12.3": "Yaṃ yaṃ samādhimicchāmi,",
"tha-ap423:12.4": "so so sampajjate mamaṃ.",
"tha-ap423:13.1": "Rajanīye na rajjāmi,",
"tha-ap423:13.2": "atho dussaniyesu ca;",
"tha-ap423:13.3": "Mohanīye na muyhāmi,",
"tha-ap423:13.4": "phalaṃ sammajjanāyidaṃ.",
"tha-ap423:14.1": "Ekanavutito kappe,",
"tha-ap423:14.2": "yaṃ kammamakariṃ tadā;",
"tha-ap423:14.3": "Duggatiṃ nābhijānāmi,",
"tha-ap423:14.4": "phalaṃ sammajjanāyidaṃ.",
"tha-ap423:15.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap423:15.2": "bhavā sabbe samūhatā;",
"tha-ap423:15.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap423:15.4": "viharāmi anāsavo.",
"tha-ap423:16.1": "Svāgataṃ vata me āsi,",
"tha-ap423:16.2": "mama buddhassa santike;",
"tha-ap423:16.3": "Tisso vijjā anuppattā,",
"tha-ap423:16.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap423:17.1": "Paṭisambhidā catasso,",
"tha-ap423:17.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap423:17.3": "Chaḷabhiññā sacchikatā,",
"tha-ap423:17.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap423:18.1": "Itthaṃ sudaṃ āyasmā sakiṃsammajjako thero imā gāthāyo abhāsitthāti.",
"tha-ap423:19.1": "Sakiṃsammajjakattherassāpadānaṃ paṭhamaṃ."
}