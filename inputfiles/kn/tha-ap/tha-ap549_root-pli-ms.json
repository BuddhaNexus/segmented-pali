{
"tha-ap549:1.1": "Therāpadāna",
"tha-ap549:2.1": "Bhaddiyavagga",
"tha-ap549:3.1": "7. Abhayattheraapadāna",
"tha-ap549:4.1": "“Padumuttaro nāma jino,",
"tha-ap549:4.2": "sabbadhammesu cakkhumā;",
"tha-ap549:4.3": "Ito satasahassamhi,",
"tha-ap549:4.4": "kappe uppajji nāyako.",
"tha-ap549:5.1": "Saraṇagamane kiñci,",
"tha-ap549:5.2": "nivesesi tathāgato;",
"tha-ap549:5.3": "Kiñci sīle nivesesi,",
"tha-ap549:5.4": "dasakammapathuttame.",
"tha-ap549:6.1": "Deti kassaci so vīro,",
"tha-ap549:6.2": "sāmaññaphalamuttamaṃ;",
"tha-ap549:6.3": "Samāpattī tathā aṭṭha,",
"tha-ap549:6.4": "tisso vijjā pavecchati.",
"tha-ap549:7.1": "Chaḷabhiññāsu yojesi,",
"tha-ap549:7.2": "kiñci sattaṃ naruttamo;",
"tha-ap549:7.3": "Deti kassaci nātho so,",
"tha-ap549:7.4": "catasso paṭisambhidā.",
"tha-ap549:8.1": "Bodhaneyyaṃ pajaṃ disvā,",
"tha-ap549:8.2": "asaṅkheyyampi yojanaṃ;",
"tha-ap549:8.3": "Khaṇena upagantvāna,",
"tha-ap549:8.4": "vineti narasārathi.",
"tha-ap549:9.1": "Tadāhaṃ haṃsavatiyaṃ,",
"tha-ap549:9.2": "ahosiṃ brāhmaṇatrajo;",
"tha-ap549:9.3": "Pāragū sabbavedānaṃ,",
"tha-ap549:9.4": "veyyākaraṇasammato.",
"tha-ap549:10.1": "Niruttiyā ca kusalo,",
"tha-ap549:10.2": "nighaṇḍumhi visārado;",
"tha-ap549:10.3": "Padako keṭubhavidū,",
"tha-ap549:10.4": "chandovicitikovido.",
"tha-ap549:11.1": "Jaṅghāvihāraṃ vicaraṃ,",
"tha-ap549:11.2": "haṃsārāmamupeccahaṃ;",
"tha-ap549:11.3": "Addasaṃ varadaṃ seṭṭhaṃ,",
"tha-ap549:11.4": "mahājanapurakkhataṃ.",
"tha-ap549:12.1": "Desentaṃ virajaṃ dhammaṃ,",
"tha-ap549:12.2": "paccanīkamatī ahaṃ;",
"tha-ap549:12.3": "Upetvā tassa kalyāṇaṃ,",
"tha-ap549:12.4": "sutvāna vimalaṃ ahaṃ.",
"tha-ap549:13.1": "Byāhataṃ punaruttaṃ vā,",
"tha-ap549:13.2": "apatthaṃ vā niratthakaṃ;",
"tha-ap549:13.3": "Nāddasaṃ tassa munino,",
"tha-ap549:13.4": "tato pabbajito ahaṃ.",
"tha-ap549:14.1": "Nacireneva kālena,",
"tha-ap549:14.2": "sabbasattavisārado;",
"tha-ap549:14.3": "Nipuṇo buddhavacane,",
"tha-ap549:14.4": "ahosiṃ guṇisammato.",
"tha-ap549:15.1": "Tadā catasso gāthāyo,",
"tha-ap549:15.2": "ganthayitvā subyañjanā;",
"tha-ap549:15.3": "Santhavitvā tilokaggaṃ,",
"tha-ap549:15.4": "desayissaṃ dine dine.",
"tha-ap549:16.1": "‘Virattosi mahāvīro,",
"tha-ap549:16.2": "saṃsāre sabhaye vasaṃ;",
"tha-ap549:16.3": "Karuṇāya na nibbāyi,",
"tha-ap549:16.4": "tato kāruṇiko muni.",
"tha-ap549:17.1": "Puthujjano vayo santo,",
"tha-ap549:17.2": "na kilesavaso ahu;",
"tha-ap549:17.3": "Sampajāno satiyutto,",
"tha-ap549:17.4": "tasmā eso acintiyo.",
"tha-ap549:18.1": "Dubbalāni kilesāni,",
"tha-ap549:18.2": "yassāsayagatāni me;",
"tha-ap549:18.3": "Ñāṇaggiparidaḍḍhāni,",
"tha-ap549:18.4": "na khīyiṃsu tamabbhutaṃ.",
"tha-ap549:19.1": "Yo sabbalokassa garu,",
"tha-ap549:19.2": "loko yassa tathā garu;",
"tha-ap549:19.3": "Tathāpi lokācariyo,",
"tha-ap549:19.4": "loko tassānuvattako’.",
"tha-ap549:20.1": "Evamādīhi sambuddhaṃ,",
"tha-ap549:20.2": "kittayaṃ dhammadesanaṃ;",
"tha-ap549:20.3": "Yāvajīvaṃ karitvāna,",
"tha-ap549:20.4": "gato saggaṃ tato cuto.",
"tha-ap549:21.1": "Satasahassito kappe,",
"tha-ap549:21.2": "yaṃ buddhamabhikittayiṃ;",
"tha-ap549:21.3": "Duggatiṃ nābhijānāmi,",
"tha-ap549:21.4": "kittanāya idaṃ phalaṃ.",
"tha-ap549:22.1": "Devaloke mahārajjaṃ,",
"tha-ap549:22.2": "pādesiṃ kañcanagghiyaṃ;",
"tha-ap549:22.3": "Cakkavattī mahārajjaṃ,",
"tha-ap549:22.4": "bahusonubhaviṃ ahaṃ.",
"tha-ap549:23.1": "Duve bhave pajāyāmi,",
"tha-ap549:23.2": "devatte atha mānuse;",
"tha-ap549:23.3": "Aññaṃ gatiṃ na jānāmi,",
"tha-ap549:23.4": "kittanāya idaṃ phalaṃ.",
"tha-ap549:24.1": "Duve kule pajāyāmi,",
"tha-ap549:24.2": "khattiye atha brāhmaṇe;",
"tha-ap549:24.3": "Nīce kule na jāyāmi,",
"tha-ap549:24.4": "kittanāya idaṃ phalaṃ.",
"tha-ap549:25.1": "Pacchime ca bhave dāni,",
"tha-ap549:25.2": "giribbajapuruttame;",
"tha-ap549:25.3": "Raññohaṃ bimbisārassa,",
"tha-ap549:25.4": "putto nāmena cābhayo.",
"tha-ap549:26.1": "Pāpamittavasaṃ gantvā,",
"tha-ap549:26.2": "nigaṇṭhena vimohito;",
"tha-ap549:26.3": "Pesito nāṭaputtena,",
"tha-ap549:26.4": "buddhaseṭṭhamupeccahaṃ.",
"tha-ap549:27.1": "Pucchitvā nipuṇaṃ pañhaṃ,",
"tha-ap549:27.2": "sutvā byākaraṇuttamaṃ;",
"tha-ap549:27.3": "Pabbajitvāna naciraṃ,",
"tha-ap549:27.4": "arahattamapāpuṇiṃ.",
"tha-ap549:28.1": "Kittayitvā jinavaraṃ,",
"tha-ap549:28.2": "kittito homi sabbadā;",
"tha-ap549:28.3": "Sugandhadehavadano,",
"tha-ap549:28.4": "āsiṃ sukhasamappito.",
"tha-ap549:29.1": "Tikkhahāsalahupañño,",
"tha-ap549:29.2": "mahāpañño tathevahaṃ;",
"tha-ap549:29.3": "Vicittapaṭibhāno ca,",
"tha-ap549:29.4": "tassa kammassa vāhasā.",
"tha-ap549:30.1": "Abhitthavitvā padumuttarāhaṃ,",
"tha-ap549:30.2": "Pasannacitto asamaṃ sayambhuṃ;",
"tha-ap549:30.3": "Na gacchi kappāni apāyabhūmiṃ,",
"tha-ap549:30.4": "Sataṃsahassāni balena tassa.",
"tha-ap549:31.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap549:31.4": "viharāmi anāsavo.",
"tha-ap549:32.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap549:32.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap549:33.1": "Paṭisambhidā catasso, … pe …",
"tha-ap549:33.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap549:34.1": "Itthaṃ sudaṃ āyasmā abhayo thero imā gāthāyo abhāsitthāti.",
"tha-ap549:35.1": "Abhayattherassāpadānaṃ sattamaṃ."
}