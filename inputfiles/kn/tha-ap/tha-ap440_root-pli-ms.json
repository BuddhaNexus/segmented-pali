{
"tha-ap440:1.1": "Therāpadāna",
"tha-ap440:2.1": "Ekavihārivagga",
"tha-ap440:3.1": "8. Harītakadāyakattheraapadāna",
"tha-ap440:4.1": "“Harītakaṃ āmalakaṃ,",
"tha-ap440:4.2": "ambajambuvibhītakaṃ;",
"tha-ap440:4.3": "Kolaṃ bhallātakaṃ billaṃ,",
"tha-ap440:4.4": "sayameva harāmahaṃ.",
"tha-ap440:5.1": "Disvāna pabbhāragataṃ,",
"tha-ap440:5.2": "jhāyiṃ jhānarataṃ muniṃ;",
"tha-ap440:5.3": "Ābādhena āpīḷentaṃ,",
"tha-ap440:5.4": "adutīyaṃ mahāmuniṃ.",
"tha-ap440:6.1": "Harītakaṃ gahetvāna,",
"tha-ap440:6.2": "sayambhussa adāsahaṃ;",
"tha-ap440:6.3": "Khādamattamhi bhesajje,",
"tha-ap440:6.4": "byādhi passambhi tāvade.",
"tha-ap440:7.1": "Pahīnadaratho buddho,",
"tha-ap440:7.2": "anumodamakāsi me;",
"tha-ap440:7.3": "‘Bhesajjadāneniminā,",
"tha-ap440:7.4": "byādhivūpasamena ca.",
"tha-ap440:8.1": "Devabhūto manusso vā,",
"tha-ap440:8.2": "jāto vā aññajātiyā;",
"tha-ap440:8.3": "Sabbattha sukhito hotu,",
"tha-ap440:8.4": "mā ca te byādhimāgamā’.",
"tha-ap440:9.1": "Idaṃ vatvāna sambuddho,",
"tha-ap440:9.2": "sayambhū aparājito;",
"tha-ap440:9.3": "Nabhaṃ abbhuggamī dhīro,",
"tha-ap440:9.4": "haṃsarājāva ambare.",
"tha-ap440:10.1": "Yato harītakaṃ dinnaṃ,",
"tha-ap440:10.2": "sayambhussa mahesino;",
"tha-ap440:10.3": "Imaṃ jātiṃ upādāya,",
"tha-ap440:10.4": "byādhi me nupapajjatha.",
"tha-ap440:11.1": "Ayaṃ pacchimako mayhaṃ,",
"tha-ap440:11.2": "carimo vattate bhavo;",
"tha-ap440:11.3": "Tisso vijjā sacchikatā,",
"tha-ap440:11.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap440:12.1": "Catunnavutito kappe,",
"tha-ap440:12.2": "bhesajjamadadiṃ tadā;",
"tha-ap440:12.3": "Duggatiṃ nābhijānāmi,",
"tha-ap440:12.4": "bhesajjassa idaṃ phalaṃ.",
"tha-ap440:13.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap440:13.4": "viharāmi anāsavo.",
"tha-ap440:14.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap440:14.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap440:15.1": "Paṭisambhidā catasso, … pe …",
"tha-ap440:15.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap440:16.1": "Itthaṃ sudaṃ āyasmā harītakadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap440:17.1": "Harītakadāyakattherassāpadānaṃ aṭṭhamaṃ."
}