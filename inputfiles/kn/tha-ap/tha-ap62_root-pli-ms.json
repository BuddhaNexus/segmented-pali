{
"tha-ap62:1.1": "Therāpadāna",
"tha-ap62:2.1": "Bījanivagga",
"tha-ap62:3.1": "10. Asanabodhiyattheraapadāna",
"tha-ap62:4.1": "“Jātiyā sattavassohaṃ,",
"tha-ap62:4.2": "addasaṃ lokanāyakaṃ;",
"tha-ap62:4.3": "Pasannacitto sumano,",
"tha-ap62:4.4": "upagacchiṃ naruttamaṃ.",
"tha-ap62:5.1": "Tissassāhaṃ bhagavato,",
"tha-ap62:5.2": "lokajeṭṭhassa tādino;",
"tha-ap62:5.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap62:5.4": "ropayiṃ bodhimuttamaṃ.",
"tha-ap62:6.1": "Asano nāmadheyyena,",
"tha-ap62:6.2": "dharaṇīruhapādapo;",
"tha-ap62:6.3": "Pañcavasse paricariṃ,",
"tha-ap62:6.4": "asanaṃ bodhimuttamaṃ.",
"tha-ap62:7.1": "Pupphitaṃ pādapaṃ disvā,",
"tha-ap62:7.2": "abbhutaṃ lomahaṃsanaṃ;",
"tha-ap62:7.3": "Sakaṃ kammaṃ pakittento,",
"tha-ap62:7.4": "buddhaseṭṭhaṃ upāgamiṃ.",
"tha-ap62:8.1": "Tisso tadā so sambuddho,",
"tha-ap62:8.2": "sayambhū aggapuggalo;",
"tha-ap62:8.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap62:8.4": "imā gāthā abhāsatha.",
"tha-ap62:9.1": "‘Yenāyaṃ ropitā bodhi,",
"tha-ap62:9.2": "buddhapūjā ca sakkatā;",
"tha-ap62:9.3": "Tamahaṃ kittayissāmi,",
"tha-ap62:9.4": "suṇātha mama bhāsato.",
"tha-ap62:10.1": "Tiṃsakappāni devesu,",
"tha-ap62:10.2": "devarajjaṃ karissati;",
"tha-ap62:10.3": "Catusaṭṭhi cakkhattuṃ so,",
"tha-ap62:10.4": "cakkavattī bhavissati.",
"tha-ap62:11.1": "Tusitā hi cavitvāna,",
"tha-ap62:11.2": "sukkamūlena codito;",
"tha-ap62:11.3": "Dve sampattī anubhotvā,",
"tha-ap62:11.4": "manussatte ramissati.",
"tha-ap62:12.1": "Padhānapahitatto so,",
"tha-ap62:12.2": "upasanto nirūpadhi;",
"tha-ap62:12.3": "Sabbāsave pariññāya,",
"tha-ap62:12.4": "nibbāyissatināsavo’.",
"tha-ap62:13.1": "Vivekamanuyuttohaṃ,",
"tha-ap62:13.2": "upasanto nirūpadhi;",
"tha-ap62:13.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap62:13.4": "viharāmi anāsavo.",
"tha-ap62:14.1": "Dvenavute ito kappe,",
"tha-ap62:14.2": "bodhiṃ ropesahaṃ tadā;",
"tha-ap62:14.3": "Duggatiṃ nābhijānāmi,",
"tha-ap62:14.4": "bodhiropassidaṃ phalaṃ.",
"tha-ap62:15.1": "Catusattatito kappe,",
"tha-ap62:15.2": "daṇḍasenoti vissuto;",
"tha-ap62:15.3": "Sattaratanasampanno,",
"tha-ap62:15.4": "cakkavattī tadā ahuṃ.",
"tha-ap62:16.1": "Tesattatimhito kappe,",
"tha-ap62:16.2": "sattāhesuṃ mahīpatī;",
"tha-ap62:16.3": "Samantanemināmena,",
"tha-ap62:16.4": "rājāno cakkavattino.",
"tha-ap62:17.1": "Paṇṇavīsatito kappe,",
"tha-ap62:17.2": "puṇṇako nāma khattiyo;",
"tha-ap62:17.3": "Sattaratanasampanno,",
"tha-ap62:17.4": "cakkavattī mahabbalo.",
"tha-ap62:18.1": "Paṭisambhidā catasso, … pe …",
"tha-ap62:18.4": "kataṃ buddhassa sāsanaṃ”. #1338",
"tha-ap62:19.1": "Itthaṃ sudaṃ āyasmā asanabodhiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap62:20.1": "Asanabodhiyattherassāpadānaṃ dasamaṃ.",
"tha-ap62:21.1": "Bījanivaggo chaṭṭho.",
"tha-ap62:22.1": "Tassuddānaṃ",
"tha-ap62:23.1": "Bījanī sataraṃsī ca,",
"tha-ap62:23.2": "sayanodakivāhiyo;",
"tha-ap62:23.3": "Parivāro padīpañca,",
"tha-ap62:23.4": "dhajo padumapūjako;",
"tha-ap62:23.5": "Bodhi ca dasamo vutto,",
"tha-ap62:23.6": "gāthā dvenavuti tathā."
}