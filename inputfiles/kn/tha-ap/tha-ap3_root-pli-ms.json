{
"tha-ap3:1.1": "Therāpadāna",
"tha-ap3:2.1": "Buddhavagga",
"tha-ap3:3.1": "3. Sāriputtattheraapadāna",
"tha-ap3:4.1": "Atha therāpadānaṃ suṇātha—",
"tha-ap3:5.1": "“Himavantassa avidūre,",
"tha-ap3:5.2": "lambako nāma pabbato;",
"tha-ap3:5.3": "Assamo sukato mayhaṃ,",
"tha-ap3:5.4": "paṇṇasālā sumāpitā.",
"tha-ap3:6.1": "Uttānakūlā nadikā,",
"tha-ap3:6.2": "supatitthā manoramā;",
"tha-ap3:6.3": "Susuddhapulinākiṇṇā,",
"tha-ap3:6.4": "avidūre mamassamaṃ.",
"tha-ap3:7.1": "Asakkharā apabbhārā,",
"tha-ap3:7.2": "sādu appaṭigandhikā;",
"tha-ap3:7.3": "Sandatī nadikā tattha,",
"tha-ap3:7.4": "sobhayantā mamassamaṃ.",
"tha-ap3:8.1": "Kumbhīlā makarā cettha,",
"tha-ap3:8.2": "susumārā ca kacchapā;",
"tha-ap3:8.3": "Caranti nadiyā tattha,",
"tha-ap3:8.4": "sobhayantā mamassamaṃ.",
"tha-ap3:9.1": "Pāṭhīnā pāvusā macchā,",
"tha-ap3:9.2": "balajā muñjarohitā;",
"tha-ap3:9.3": "Vaggaḷā papatāyantā,",
"tha-ap3:9.4": "sobhayanti mamassamaṃ.",
"tha-ap3:10.1": "Ubho kūlesu nadiyā,",
"tha-ap3:10.2": "pupphino phalino dumā;",
"tha-ap3:10.3": "Ubhato abhilambantā,",
"tha-ap3:10.4": "sobhayanti mamassamaṃ.",
"tha-ap3:11.1": "Ambā sālā ca tilakā,",
"tha-ap3:11.2": "pāṭalī sinduvārakā;",
"tha-ap3:11.3": "Dibbagandhā sampavanti,",
"tha-ap3:11.4": "pupphitā mama assame.",
"tha-ap3:12.1": "Campakā saḷalā nīpā,",
"tha-ap3:12.2": "nāgapunnāgaketakā;",
"tha-ap3:12.3": "Dibbagandhā sampavanti,",
"tha-ap3:12.4": "pupphitā mama assame.",
"tha-ap3:13.1": "Atimuttā asokā ca,",
"tha-ap3:13.2": "bhaginīmālā ca pupphitā;",
"tha-ap3:13.3": "Aṅkolā bimbijālā ca,",
"tha-ap3:13.4": "pupphitā mama assame.",
"tha-ap3:14.1": "Ketakā kandali ceva,",
"tha-ap3:14.2": "godhukā tiṇasūlikā;",
"tha-ap3:14.3": "Dibbagandhaṃ sampavantā,",
"tha-ap3:14.4": "sobhayanti mamassamaṃ.",
"tha-ap3:15.1": "Kaṇikārā kaṇṇikā ca,",
"tha-ap3:15.2": "asanā ajjunā bahū;",
"tha-ap3:15.3": "Dibbagandhaṃ sampavantā,",
"tha-ap3:15.4": "sobhayanti mamassamaṃ.",
"tha-ap3:16.1": "Punnāgā giripunnāgā,",
"tha-ap3:16.2": "koviḷārā ca pupphitā;",
"tha-ap3:16.3": "Dibbagandhaṃ sampavantā,",
"tha-ap3:16.4": "sobhayanti mamassamaṃ.",
"tha-ap3:17.1": "Uddhālakā ca kuṭajā,",
"tha-ap3:17.2": "kadambā vakulā bahū;",
"tha-ap3:17.3": "Dibbagandhaṃ sampavantā,",
"tha-ap3:17.4": "sobhayanti mamassamaṃ.",
"tha-ap3:18.1": "Āḷakā isimuggā ca,",
"tha-ap3:18.2": "kadalimātuluṅgiyo;",
"tha-ap3:18.3": "Gandhodakena saṃvaḍḍhā,",
"tha-ap3:18.4": "phalāni dhārayanti te.",
"tha-ap3:19.1": "Aññe pupphanti padumā,",
"tha-ap3:19.2": "aññe jāyanti kesarī;",
"tha-ap3:19.3": "Aññe opupphā padumā,",
"tha-ap3:19.4": "pupphitā taḷāke tadā.",
"tha-ap3:20.1": "Gabbhaṃ gaṇhanti padumā,",
"tha-ap3:20.2": "niddhāvanti mulāḷiyo;",
"tha-ap3:20.3": "Siṅghāṭipattamākiṇṇā,",
"tha-ap3:20.4": "sobhanti taḷāke tadā.",
"tha-ap3:21.1": "Nayitā ambagandhī ca,",
"tha-ap3:21.2": "uttalī bandhujīvakā;",
"tha-ap3:21.3": "Dibbagandhā sampavanti,",
"tha-ap3:21.4": "pupphitā taḷāke tadā.",
"tha-ap3:22.1": "Pāṭhīnā pāvusā macchā,",
"tha-ap3:22.2": "balajā muñjarohitā;",
"tha-ap3:22.3": "Saṅgulā maggurā ceva,",
"tha-ap3:22.4": "vasanti taḷāke tadā.",
"tha-ap3:23.1": "Kumbhīlā susumārā ca,",
"tha-ap3:23.2": "tantigāhā ca rakkhasā;",
"tha-ap3:23.3": "Oguhā ajagarā ca,",
"tha-ap3:23.4": "vasanti taḷāke tadā.",
"tha-ap3:24.1": "Pārevatā ravihaṃsā,",
"tha-ap3:24.2": "cakkavākā nadīcarā;",
"tha-ap3:24.3": "Kokilā sukasāḷikā,",
"tha-ap3:24.4": "upajīvanti taṃ saraṃ.",
"tha-ap3:25.1": "Kukkutthakā kuḷīrakā,",
"tha-ap3:25.2": "vane pokkharasātakā;",
"tha-ap3:25.3": "Dindibhā suvapotā ca,",
"tha-ap3:25.4": "upajīvanti taṃ saraṃ.",
"tha-ap3:26.1": "Haṃsā koñcā mayūrā ca,",
"tha-ap3:26.2": "kokilā tambacūḷakā;",
"tha-ap3:26.3": "Pammakā jīvaṃjīvā ca,",
"tha-ap3:26.4": "upajīvanti taṃ saraṃ.",
"tha-ap3:27.1": "Kosikā poṭṭhasīsā ca,",
"tha-ap3:27.2": "kurarā senakā bahū;",
"tha-ap3:27.3": "Mahākāḷā ca sakuṇā,",
"tha-ap3:27.4": "upajīvanti taṃ saraṃ.",
"tha-ap3:28.1": "Pasadā ca varāhā ca,",
"tha-ap3:28.2": "camarā gaṇḍakā bahū;",
"tha-ap3:28.3": "Rohiccā sukapotā ca,",
"tha-ap3:28.4": "upajīvanti taṃ saraṃ.",
"tha-ap3:29.1": "Sīhabyagghā ca dīpī ca,",
"tha-ap3:29.2": "acchakokataracchakā;",
"tha-ap3:29.3": "Tidhā pabhinnamātaṅgā,",
"tha-ap3:29.4": "upajīvanti taṃ saraṃ.",
"tha-ap3:30.1": "Kinnarā vānarā ceva,",
"tha-ap3:30.2": "athopi vanakammikā;",
"tha-ap3:30.3": "Cetā ca luddakā ceva,",
"tha-ap3:30.4": "upajīvanti taṃ saraṃ.",
"tha-ap3:31.1": "Tindukāni piyālāni,",
"tha-ap3:31.2": "madhuke kāsumāriyo;",
"tha-ap3:31.3": "Dhuvaṃ phalāni dhārenti,",
"tha-ap3:31.4": "avidūre mamassamaṃ.",
"tha-ap3:32.1": "Kosambā saḷalā nimbā,",
"tha-ap3:32.2": "sāduphalasamāyutā;",
"tha-ap3:32.3": "Dhuvaṃ phalāni dhārenti,",
"tha-ap3:32.4": "avidūre mamassamaṃ.",
"tha-ap3:33.1": "Harītakā āmalakā,",
"tha-ap3:33.2": "ambajambuvibhītakā;",
"tha-ap3:33.3": "Kolā bhallātakā billā,",
"tha-ap3:33.4": "phalāni dhārayanti te.",
"tha-ap3:34.1": "Āluvā ca kaḷambā ca,",
"tha-ap3:34.2": "biḷālītakkaḷāni ca;",
"tha-ap3:34.3": "Jīvakā sutakā ceva,",
"tha-ap3:34.4": "bahukā mama assame.",
"tha-ap3:35.1": "Assamassāvidūramhi,",
"tha-ap3:35.2": "taḷākāsuṃ sunimmitā;",
"tha-ap3:35.3": "Acchodakā sītajalā,",
"tha-ap3:35.4": "supatitthā manoramā.",
"tha-ap3:36.1": "Padumuppalasañchannā,",
"tha-ap3:36.2": "puṇḍarīkasamāyutā;",
"tha-ap3:36.3": "Mandālakehi sañchannā,",
"tha-ap3:36.4": "dibbagandho pavāyati.",
"tha-ap3:37.1": "Evaṃ sabbaṅgasampanne,",
"tha-ap3:37.2": "pupphite phalite vane;",
"tha-ap3:37.3": "Sukate assame ramme,",
"tha-ap3:37.4": "viharāmi ahaṃ tadā.",
"tha-ap3:38.1": "Sīlavā vatasampanno,",
"tha-ap3:38.2": "jhāyī jhānarato sadā;",
"tha-ap3:38.3": "Pañcābhiññābalappatto,",
"tha-ap3:38.4": "suruci nāma tāpaso.",
"tha-ap3:39.1": "Catuvīsasahassāni,",
"tha-ap3:39.2": "sissā mayhaṃ upaṭṭhahuṃ;",
"tha-ap3:39.3": "Sabbeva brāhmaṇā ete,",
"tha-ap3:39.4": "jātimanto yasassino.",
"tha-ap3:40.1": "Lakkhaṇe itihāse ca,",
"tha-ap3:40.2": "sanighaṇṭusakeṭubhe;",
"tha-ap3:40.3": "Padakā veyyākaraṇā,",
"tha-ap3:40.4": "sadhamme pāramiṃ gatā.",
"tha-ap3:41.1": "Uppātesu nimittesu,",
"tha-ap3:41.2": "lakkhaṇesu ca kovidā;",
"tha-ap3:41.3": "Pathabyā bhūmantalikkhe,",
"tha-ap3:41.4": "mama sissā susikkhitā.",
"tha-ap3:42.1": "Appicchā nipakā ete,",
"tha-ap3:42.2": "appāhārā alolupā;",
"tha-ap3:42.3": "Lābhālābhena santuṭṭhā,",
"tha-ap3:42.4": "parivārenti maṃ sadā.",
"tha-ap3:43.1": "Jhāyī jhānaratā dhīrā,",
"tha-ap3:43.2": "santacittā samāhitā;",
"tha-ap3:43.3": "Ākiñcaññaṃ patthayantā,",
"tha-ap3:43.4": "parivārenti maṃ sadā.",
"tha-ap3:44.1": "Abhiññāpāramippattā,",
"tha-ap3:44.2": "pettike gocare ratā;",
"tha-ap3:44.3": "Antalikkhacarā dhīrā,",
"tha-ap3:44.4": "parivārenti maṃ sadā.",
"tha-ap3:45.1": "Saṃvutā chasu dvāresu,",
"tha-ap3:45.2": "anejā rakkhitindriyā;",
"tha-ap3:45.3": "Asaṃsaṭṭhā ca te dhīrā,",
"tha-ap3:45.4": "mama sissā durāsadā.",
"tha-ap3:46.1": "Pallaṅkena nisajjāya,",
"tha-ap3:46.2": "ṭhānacaṅkamanena ca;",
"tha-ap3:46.3": "Vītināmenti te rattiṃ,",
"tha-ap3:46.4": "mama sissā durāsadā.",
"tha-ap3:47.1": "Rajanīye na rajjanti,",
"tha-ap3:47.2": "dussanīye na dussare;",
"tha-ap3:47.3": "Mohanīye na muyhanti,",
"tha-ap3:47.4": "mama sissā durāsadā.",
"tha-ap3:48.1": "Iddhiṃ vīmaṃsamānā te,",
"tha-ap3:48.2": "vattanti niccakālikaṃ;",
"tha-ap3:48.3": "Pathaviṃ te pakampenti,",
"tha-ap3:48.4": "sārambhena durāsadā.",
"tha-ap3:49.1": "Kīḷamānā ca te sissā,",
"tha-ap3:49.2": "kīḷanti jhānakīḷitaṃ;",
"tha-ap3:49.3": "Jambuto phalamānenti,",
"tha-ap3:49.4": "mama sissā durāsadā.",
"tha-ap3:50.1": "Aññe gacchanti goyānaṃ,",
"tha-ap3:50.2": "aññe pubbavidehakaṃ;",
"tha-ap3:50.3": "Aññe ca uttarakuruṃ,",
"tha-ap3:50.4": "esanāya durāsadā.",
"tha-ap3:51.1": "Purato pesenti khāriṃ,",
"tha-ap3:51.2": "pacchato ca vajanti te;",
"tha-ap3:51.3": "Catuvīsasahassehi,",
"tha-ap3:51.4": "chāditaṃ hoti ambaraṃ.",
"tha-ap3:52.1": "Aggipākī anaggī ca,",
"tha-ap3:52.2": "dantodukkhalikāpi ca;",
"tha-ap3:52.3": "Asmena koṭṭitā keci,",
"tha-ap3:52.4": "pavattaphalabhojanā.",
"tha-ap3:53.1": "Udakorohaṇā keci,",
"tha-ap3:53.2": "sāyaṃ pāto sucīratā;",
"tha-ap3:53.3": "Toyābhisecanakarā,",
"tha-ap3:53.4": "mama sissā durāsadā.",
"tha-ap3:54.1": "Parūḷhakacchanakhalomā,",
"tha-ap3:54.2": "paṅkadantā rajassirā;",
"tha-ap3:54.3": "Gandhitā sīlagandhena,",
"tha-ap3:54.4": "mama sissā durāsadā.",
"tha-ap3:55.1": "Pātova sannipatitvā,",
"tha-ap3:55.2": "jaṭilā uggatāpanā;",
"tha-ap3:55.3": "Lābhālābhaṃ pakittetvā,",
"tha-ap3:55.4": "gacchanti ambare tadā.",
"tha-ap3:56.1": "Etesaṃ pakkamantānaṃ,",
"tha-ap3:56.2": "mahāsaddo pavattati;",
"tha-ap3:56.3": "Ajinacammasaddena,",
"tha-ap3:56.4": "muditā honti devatā.",
"tha-ap3:57.1": "Disodisaṃ pakkamanti,",
"tha-ap3:57.2": "antalikkhacarā isī;",
"tha-ap3:57.3": "Sake balenupatthaddhā,",
"tha-ap3:57.4": "te gacchanti yadicchakaṃ.",
"tha-ap3:58.1": "Pathavīkampakā ete,",
"tha-ap3:58.2": "sabbeva nabhacārino;",
"tha-ap3:58.3": "Uggatejā duppasahā,",
"tha-ap3:58.4": "sāgarova akhobhiyā.",
"tha-ap3:59.1": "Ṭhānacaṅkamino keci,",
"tha-ap3:59.2": "keci nesajjikā isī;",
"tha-ap3:59.3": "Pavattabhojanā keci,",
"tha-ap3:59.4": "mama sissā durāsadā.",
"tha-ap3:60.1": "Mettāvihārino ete,",
"tha-ap3:60.2": "hitesī sabbapāṇinaṃ;",
"tha-ap3:60.3": "Anattukkaṃsakā sabbe,",
"tha-ap3:60.4": "na te vambhenti kassaci.",
"tha-ap3:61.1": "Sīharājāvasambhītā,",
"tha-ap3:61.2": "gajarājāva thāmavā;",
"tha-ap3:61.3": "Durāsadā byagghāriva,",
"tha-ap3:61.4": "āgacchanti mamantike.",
"tha-ap3:62.1": "Vijjādharā devatā ca,",
"tha-ap3:62.2": "nāgagandhabbarakkhasā;",
"tha-ap3:62.3": "Kumbhaṇḍā dānavā garuḷā,",
"tha-ap3:62.4": "upajīvanti taṃ saraṃ.",
"tha-ap3:63.1": "Te jaṭākhāribharitā,",
"tha-ap3:63.2": "ajinuttaravāsanā;",
"tha-ap3:63.3": "Antalikkhacarā sabbe,",
"tha-ap3:63.4": "upajīvanti taṃ saraṃ.",
"tha-ap3:64.1": "Sadānucchavikā ete,",
"tha-ap3:64.2": "aññamaññaṃ sagāravā;",
"tha-ap3:64.3": "Catubbīsasahassānaṃ,",
"tha-ap3:64.4": "khipitasaddo na vijjati.",
"tha-ap3:65.1": "Pāde pādaṃ nikkhipantā,",
"tha-ap3:65.2": "appasaddā susaṃvutā;",
"tha-ap3:65.3": "Upasaṅkamma sabbeva,",
"tha-ap3:65.4": "sirasā vandare mamaṃ.",
"tha-ap3:66.1": "Tehi sissehi parivuto,",
"tha-ap3:66.2": "santehi ca tapassibhi;",
"tha-ap3:66.3": "Vasāmi assame tattha,",
"tha-ap3:66.4": "jhāyī jhānarato ahaṃ.",
"tha-ap3:67.1": "Isīnaṃ sīlagandhena,",
"tha-ap3:67.2": "pupphagandhena cūbhayaṃ;",
"tha-ap3:67.3": "Phalīnaṃ phalagandhena,",
"tha-ap3:67.4": "gandhito hoti assamo.",
"tha-ap3:68.1": "Rattindivaṃ na jānāmi,",
"tha-ap3:68.2": "arati me na vijjati;",
"tha-ap3:68.3": "Sake sisse ovadanto,",
"tha-ap3:68.4": "bhiyyo hāsaṃ labhāmahaṃ.",
"tha-ap3:69.1": "Pupphānaṃ pupphamānānaṃ,",
"tha-ap3:69.2": "phalānañca vipaccataṃ;",
"tha-ap3:69.3": "Dibbagandhā pavāyanti,",
"tha-ap3:69.4": "sobhayantā mamassamaṃ.",
"tha-ap3:70.1": "Samādhimhā vuṭṭhahitvā,",
"tha-ap3:70.2": "ātāpī nipako ahaṃ;",
"tha-ap3:70.3": "Khāribhāraṃ gahetvāna,",
"tha-ap3:70.4": "vanaṃ ajjhogahiṃ ahaṃ.",
"tha-ap3:71.1": "Uppāte supine cāpi,",
"tha-ap3:71.2": "Lakkhaṇesu susikkhito;",
"tha-ap3:71.3": "Pavattamānaṃ mantapadaṃ,",
"tha-ap3:71.4": "Dhārayāmi ahaṃ tadā.",
"tha-ap3:72.1": "Anomadassī bhagavā,",
"tha-ap3:72.2": "lokajeṭṭho narāsabho;",
"tha-ap3:72.3": "Vivekakāmo sambuddho,",
"tha-ap3:72.4": "himavantamupāgami.",
"tha-ap3:73.1": "Ajjhogāhetvā himavantaṃ,",
"tha-ap3:73.2": "aggo kāruṇiko muni;",
"tha-ap3:73.3": "Pallaṅkaṃ ābhujitvāna,",
"tha-ap3:73.4": "nisīdi purisuttamo.",
"tha-ap3:74.1": "Tamaddasāhaṃ sambuddhaṃ,",
"tha-ap3:74.2": "sappabhāsaṃ manoramaṃ;",
"tha-ap3:74.3": "Indīvaraṃva jalitaṃ,",
"tha-ap3:74.4": "ādittaṃva hutāsanaṃ.",
"tha-ap3:75.1": "Jalantaṃ dīparukkhaṃva,",
"tha-ap3:75.2": "vijjutaṃ gagane yathā;",
"tha-ap3:75.3": "Suphullaṃ sālarājaṃva,",
"tha-ap3:75.4": "addasaṃ lokanāyakaṃ.",
"tha-ap3:76.1": "Ayaṃ nāgo mahāvīro,",
"tha-ap3:76.2": "dukkhassantakaro muni;",
"tha-ap3:76.3": "Imaṃ dassanamāgamma,",
"tha-ap3:76.4": "sabbadukkhā pamuccare.",
"tha-ap3:77.1": "Disvānāhaṃ devadevaṃ,",
"tha-ap3:77.2": "lakkhaṇaṃ upadhārayiṃ;",
"tha-ap3:77.3": "Buddho nu kho na vā buddho,",
"tha-ap3:77.4": "handa passāmi cakkhumaṃ.",
"tha-ap3:78.1": "Sahassārāni cakkāni,",
"tha-ap3:78.2": "dissanti caraṇuttame;",
"tha-ap3:78.3": "Lakkhaṇānissa disvāna,",
"tha-ap3:78.4": "niṭṭhaṃ gacchiṃ tathāgate.",
"tha-ap3:79.1": "Sammajjaniṃ gahetvāna,",
"tha-ap3:79.2": "sammajjitvānahaṃ tadā;",
"tha-ap3:79.3": "Atha pupphe samānetvā,",
"tha-ap3:79.4": "buddhaseṭṭhaṃ apūjayiṃ.",
"tha-ap3:80.1": "Pūjayitvāna taṃ buddhaṃ,",
"tha-ap3:80.2": "oghatiṇṇamanāsavaṃ;",
"tha-ap3:80.3": "Ekaṃsaṃ ajinaṃ katvā,",
"tha-ap3:80.4": "namassiṃ lokanāyakaṃ.",
"tha-ap3:81.1": "Yena ñāṇena sambuddho,",
"tha-ap3:81.2": "viharati anāsavo;",
"tha-ap3:81.3": "Taṃ ñāṇaṃ kittayissāmi,",
"tha-ap3:81.4": "suṇātha mama bhāsato.",
"tha-ap3:82.1": "‘Samuddharasimaṃ lokaṃ,",
"tha-ap3:82.2": "sayambhū amitodaya;",
"tha-ap3:82.3": "Tava dassanamāgamma,",
"tha-ap3:82.4": "kaṅkhāsotaṃ taranti te.",
"tha-ap3:83.1": "Tuvaṃ satthā ca ketu ca,",
"tha-ap3:83.2": "dhajo yūpo ca pāṇinaṃ;",
"tha-ap3:83.3": "Parāyaṇo patiṭṭhā ca,",
"tha-ap3:83.4": "dīpo ca dvipaduttamo.",
"tha-ap3:84.1": "Sakkā samudde udakaṃ,",
"tha-ap3:84.2": "pametuṃ āḷhakena vā;",
"tha-ap3:84.3": "Na tveva tava sabbaññu,",
"tha-ap3:84.4": "ñāṇaṃ sakkā pametave.",
"tha-ap3:85.1": "Dhāretuṃ pathaviṃ sakkā,",
"tha-ap3:85.2": "ṭhapetvā tulamaṇḍale;",
"tha-ap3:85.3": "Na tveva tava sabbaññu,",
"tha-ap3:85.4": "ñāṇaṃ sakkā dharetave.",
"tha-ap3:86.1": "Ākāso minituṃ sakkā,",
"tha-ap3:86.2": "rajjuyā aṅgulena vā;",
"tha-ap3:86.3": "Na tveva tava sabbaññu,",
"tha-ap3:86.4": "ñāṇaṃ sakkā pametave.",
"tha-ap3:87.1": "Mahāsamudde udakaṃ,",
"tha-ap3:87.2": "pathavī cākhilājaṭaṃ;",
"tha-ap3:87.3": "Buddhañāṇaṃ upādāya,",
"tha-ap3:87.4": "upamāto na yujjare.",
"tha-ap3:88.1": "Sadevakassa lokassa,",
"tha-ap3:88.2": "cittaṃ yesaṃ pavattati;",
"tha-ap3:88.3": "Antojālagatā ete,",
"tha-ap3:88.4": "tava ñāṇamhi cakkhuma.",
"tha-ap3:89.1": "Yena ñāṇena pattosi,",
"tha-ap3:89.2": "kevalaṃ bodhimuttamaṃ;",
"tha-ap3:89.3": "Tena ñāṇena sabbaññu,",
"tha-ap3:89.4": "maddasī paratitthiye’.",
"tha-ap3:90.1": "Imā gāthā thavitvāna,",
"tha-ap3:90.2": "suruci nāma tāpaso;",
"tha-ap3:90.3": "Ajinaṃ pattharitvāna,",
"tha-ap3:90.4": "pathaviyaṃ nisīdi so.",
"tha-ap3:91.1": "‘Cullāsītisahassāni,",
"tha-ap3:91.2": "ajjhogāḷho mahaṇṇave;",
"tha-ap3:91.3": "Accuggato tāvadeva,",
"tha-ap3:91.4": "girirājā pavuccati.",
"tha-ap3:92.1": "Tāva accuggato neru,",
"tha-ap3:92.2": "āyato vitthato ca so;",
"tha-ap3:92.3": "Cuṇṇito aṇubhedena,",
"tha-ap3:92.4": "koṭisatasahassaso.",
"tha-ap3:93.1": "Lakkhe ṭhapiyamānamhi,",
"tha-ap3:93.2": "parikkhayamagacchatha;",
"tha-ap3:93.3": "Na tveva tava sabbaññu,",
"tha-ap3:93.4": "ñāṇaṃ sakkā pametave.",
"tha-ap3:94.1": "Sukhumacchikena jālena,",
"tha-ap3:94.2": "udakaṃ yo parikkhipe;",
"tha-ap3:94.3": "Ye keci udake pāṇā,",
"tha-ap3:94.4": "antojālagatā siyuṃ.",
"tha-ap3:95.1": "Tatheva hi mahāvīra,",
"tha-ap3:95.2": "ye keci puthutitthiyā;",
"tha-ap3:95.3": "Diṭṭhigahanapakkhandā,",
"tha-ap3:95.4": "parāmāsena mohitā.",
"tha-ap3:96.1": "Tava suddhena ñāṇena,",
"tha-ap3:96.2": "anāvaraṇadassinā;",
"tha-ap3:96.3": "Antojālagatā ete,",
"tha-ap3:96.4": "ñāṇaṃ te nātivattare’.",
"tha-ap3:97.1": "Bhagavā tamhi samaye,",
"tha-ap3:97.2": "anomadassī mahāyaso;",
"tha-ap3:97.3": "Vuṭṭhahitvā samādhimhā,",
"tha-ap3:97.4": "disaṃ olokayī jino.",
"tha-ap3:98.1": "Anomadassimunino,",
"tha-ap3:98.2": "Nisabho nāma sāvako;",
"tha-ap3:98.3": "Parivuto satasahassehi,",
"tha-ap3:98.4": "Santacittehi tādibhi.",
"tha-ap3:99.1": "Khīṇāsavehi suddhehi,",
"tha-ap3:99.2": "chaḷabhiññehi jhāyibhi;",
"tha-ap3:99.3": "Cittamaññāya buddhassa,",
"tha-ap3:99.4": "upesi lokanāyakaṃ.",
"tha-ap3:100.1": "Antalikkhe ṭhitā tattha,",
"tha-ap3:100.2": "padakkhiṇamakaṃsu te;",
"tha-ap3:100.3": "Namassantā pañjalikā,",
"tha-ap3:100.4": "otaruṃ buddhasantike.",
"tha-ap3:101.1": "Anomadassī bhagavā,",
"tha-ap3:101.2": "lokajeṭṭho narāsabho;",
"tha-ap3:101.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap3:101.4": "sītaṃ pātukarī jino.",
"tha-ap3:102.1": "Varuṇo nāmupaṭṭhāko,",
"tha-ap3:102.2": "anomadassissa satthuno;",
"tha-ap3:102.3": "Ekaṃsaṃ cīvaraṃ katvā,",
"tha-ap3:102.4": "apucchi lokanāyakaṃ.",
"tha-ap3:103.1": "‘Ko nu kho bhagavā hetu,",
"tha-ap3:103.2": "sitakammassa satthuno;",
"tha-ap3:103.3": "Na hi buddhā ahetūhi,",
"tha-ap3:103.4": "sitaṃ pātukaronti te’.",
"tha-ap3:104.1": "Anomadassī bhagavā,",
"tha-ap3:104.2": "lokajeṭṭho narāsabho;",
"tha-ap3:104.3": "Bhikkhumajjhe nisīditvā,",
"tha-ap3:104.4": "imaṃ gāthaṃ abhāsatha.",
"tha-ap3:105.1": "‘Yo maṃ pupphena pūjesi,",
"tha-ap3:105.2": "ñāṇañcāpi anutthavi;",
"tha-ap3:105.3": "Tamahaṃ kittayissāmi,",
"tha-ap3:105.4": "suṇotha mama bhāsato’.",
"tha-ap3:106.1": "Buddhassa giramaññāya,",
"tha-ap3:106.2": "sabbe devā samāgatā;",
"tha-ap3:106.3": "Saddhammaṃ sotukāmā te,",
"tha-ap3:106.4": "sambuddhamupasaṅkamuṃ.",
"tha-ap3:107.1": "Dasasu lokadhātūsu,",
"tha-ap3:107.2": "devakāyā mahiddhikā;",
"tha-ap3:107.3": "Saddhammaṃ sotukāmā te,",
"tha-ap3:107.4": "sambuddhamupasaṅkamuṃ.",
"tha-ap3:108.1": "‘Hatthī assā rathā pattī,",
"tha-ap3:108.2": "senā ca caturaṅginī;",
"tha-ap3:108.3": "Parivāressantimaṃ niccaṃ,",
"tha-ap3:108.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap3:109.1": "Saṭṭhitūriyasahassāni,",
"tha-ap3:109.2": "bheriyo samalaṅkatā;",
"tha-ap3:109.3": "Upaṭṭhissantimaṃ niccaṃ,",
"tha-ap3:109.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap3:110.1": "Soḷasitthisahassāni,",
"tha-ap3:110.2": "nāriyo samalaṅkatā;",
"tha-ap3:110.3": "Vicittavatthābharaṇā,",
"tha-ap3:110.4": "āmuttamaṇikuṇḍalā.",
"tha-ap3:111.1": "Aḷārapamhā hasulā,",
"tha-ap3:111.2": "susaññā tanumajjhimā;",
"tha-ap3:111.3": "Parivāressantimaṃ niccaṃ,",
"tha-ap3:111.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap3:112.1": "Kappasatasahassāni,",
"tha-ap3:112.2": "devaloke ramissati;",
"tha-ap3:112.3": "Sahassakkhattuṃ cakkavattī,",
"tha-ap3:112.4": "rājā raṭṭhe bhavissati.",
"tha-ap3:113.1": "Sahassakkhattuṃ devindo,",
"tha-ap3:113.2": "devarajjaṃ karissati;",
"tha-ap3:113.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap3:113.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap3:114.1": "Pacchime bhavasampatte,",
"tha-ap3:114.2": "manussattaṃ gamissati;",
"tha-ap3:114.3": "Brāhmaṇī sāriyā nāma,",
"tha-ap3:114.4": "dhārayissati kucchinā.",
"tha-ap3:115.1": "Mātuyā nāmagottena,",
"tha-ap3:115.2": "paññāyissatiyaṃ naro;",
"tha-ap3:115.3": "Sāriputtoti nāmena,",
"tha-ap3:115.4": "tikkhapañño bhavissati.",
"tha-ap3:116.1": "Asītikoṭī chaḍḍetvā,",
"tha-ap3:116.2": "pabbajissatikiñcano;",
"tha-ap3:116.3": "Gavesanto santipadaṃ,",
"tha-ap3:116.4": "carissati mahiṃ imaṃ.",
"tha-ap3:117.1": "Apparimeyye ito kappe,",
"tha-ap3:117.2": "okkākakulasambhavo;",
"tha-ap3:117.3": "Gotamo nāma gottena,",
"tha-ap3:117.4": "satthā loke bhavissati.",
"tha-ap3:118.1": "Tassa dhammesu dāyādo,",
"tha-ap3:118.2": "oraso dhammanimmito;",
"tha-ap3:118.3": "Sāriputtoti nāmena,",
"tha-ap3:118.4": "hessati aggasāvako.",
"tha-ap3:119.1": "Ayaṃ bhāgīrathī gaṅgā,",
"tha-ap3:119.2": "himavantā pabhāvitā;",
"tha-ap3:119.3": "Mahāsamuddamappeti,",
"tha-ap3:119.4": "tappayantī mahodadhiṃ.",
"tha-ap3:120.1": "Tathevāyaṃ sāriputto,",
"tha-ap3:120.2": "sake tīsu visārado;",
"tha-ap3:120.3": "Paññāya pāramiṃ gantvā,",
"tha-ap3:120.4": "tappayissati pāṇine.",
"tha-ap3:121.1": "Himavantamupādāya,",
"tha-ap3:121.2": "sāgarañca mahodadhiṃ;",
"tha-ap3:121.3": "Etthantare yaṃ pulinaṃ,",
"tha-ap3:121.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap3:122.1": "Tampi sakkā asesena,",
"tha-ap3:122.2": "saṅkhātuṃ gaṇanā yathā;",
"tha-ap3:122.3": "Na tveva sāriputtassa,",
"tha-ap3:122.4": "paññāyanto bhavissati.",
"tha-ap3:123.1": "Lakkhe ṭhapiyamānamhi,",
"tha-ap3:123.2": "khīye gaṅgāya vālukā;",
"tha-ap3:123.3": "Na tveva sāriputtassa,",
"tha-ap3:123.4": "paññāyanto bhavissati.",
"tha-ap3:124.1": "Mahāsamudde ūmiyo,",
"tha-ap3:124.2": "gaṇanāto asaṅkhiyā;",
"tha-ap3:124.3": "Tatheva sāriputtassa,",
"tha-ap3:124.4": "paññāyanto na hessati.",
"tha-ap3:125.1": "Ārādhayitvā sambuddhaṃ,",
"tha-ap3:125.2": "gotamaṃ sakyapuṅgavaṃ;",
"tha-ap3:125.3": "Paññāya pāramiṃ gantvā,",
"tha-ap3:125.4": "hessati aggasāvako.",
"tha-ap3:126.1": "Pavattitaṃ dhammacakkaṃ,",
"tha-ap3:126.2": "sakyaputtena tādinā;",
"tha-ap3:126.3": "Anuvattessati sammā,",
"tha-ap3:126.4": "vassento dhammavuṭṭhiyo.",
"tha-ap3:127.1": "Sabbametaṃ abhiññāya,",
"tha-ap3:127.2": "gotamo sakyapuṅgavo;",
"tha-ap3:127.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap3:127.4": "aggaṭṭhāne ṭhapessati’.",
"tha-ap3:128.1": "Aho me sukataṃ kammaṃ,",
"tha-ap3:128.2": "anomadassissa satthuno;",
"tha-ap3:128.3": "Yassāhaṃ kāraṃ katvāna,",
"tha-ap3:128.4": "sabbattha pāramiṃ gato.",
"tha-ap3:129.1": "Aparimeyye kataṃ kammaṃ,",
"tha-ap3:129.2": "phalaṃ dassesi me idha;",
"tha-ap3:129.3": "Sumutto saravegova,",
"tha-ap3:129.4": "kilese jhāpayiṃ ahaṃ.",
"tha-ap3:130.1": "Asaṅkhataṃ gavesanto,",
"tha-ap3:130.2": "nibbānaṃ acalaṃ padaṃ;",
"tha-ap3:130.3": "Vicinaṃ titthiye sabbe,",
"tha-ap3:130.4": "esāhaṃ saṃsariṃ bhave.",
"tha-ap3:131.1": "Yathāpi byādhito poso,",
"tha-ap3:131.2": "pariyeseyya osadhaṃ;",
"tha-ap3:131.3": "Vicineyya vanaṃ sabbaṃ,",
"tha-ap3:131.4": "byādhito parimuttiyā.",
"tha-ap3:132.1": "Asaṅkhataṃ gavesanto,",
"tha-ap3:132.2": "nibbānaṃ amataṃ padaṃ;",
"tha-ap3:132.3": "Abbokiṇṇaṃ pañcasataṃ,",
"tha-ap3:132.4": "pabbajiṃ isipabbajaṃ.",
"tha-ap3:133.1": "Jaṭābhārena bharito,",
"tha-ap3:133.2": "ajinuttaranivāsano;",
"tha-ap3:133.3": "Abhiññāpāramiṃ gantvā,",
"tha-ap3:133.4": "brahmalokaṃ agacchihaṃ.",
"tha-ap3:134.1": "Natthi bāhirake suddhi,",
"tha-ap3:134.2": "ṭhapetvā jinasāsanaṃ;",
"tha-ap3:134.3": "Ye keci buddhimā sattā,",
"tha-ap3:134.4": "sujjhanti jinasāsane.",
"tha-ap3:135.1": "Attakāramayaṃ etaṃ,",
"tha-ap3:135.2": "nayidaṃ itihītihaṃ;",
"tha-ap3:135.3": "Asaṅkhataṃ gavesanto,",
"tha-ap3:135.4": "kutitthe sañcariṃ ahaṃ.",
"tha-ap3:136.1": "Yathā sāratthiko poso,",
"tha-ap3:136.2": "kadaliṃ chetvāna phālaye;",
"tha-ap3:136.3": "Na tattha sāraṃ vindeyya,",
"tha-ap3:136.4": "sārena rittako hi so.",
"tha-ap3:137.1": "Tatheva titthiyā loke,",
"tha-ap3:137.2": "nānādiṭṭhī bahujjanā;",
"tha-ap3:137.3": "Asaṅkhatena rittāse,",
"tha-ap3:137.4": "sārena kadalī yathā.",
"tha-ap3:138.1": "Pacchime bhavasampatte,",
"tha-ap3:138.2": "brahmabandhu ahosahaṃ;",
"tha-ap3:138.3": "Mahābhogaṃ chaḍḍetvāna,",
"tha-ap3:138.4": "pabbajiṃ anagāriyaṃ”.",
"tha-ap3:139.1": "Paṭhamabhāṇavāraṃ.",
"tha-ap3:140.1": "“Ajjhāyako mantadharo,",
"tha-ap3:140.2": "tiṇṇaṃ vedāna pāragū;",
"tha-ap3:140.3": "Brāhmaṇo sañcayo nāma,",
"tha-ap3:140.4": "tassa mūle vasāmahaṃ.",
"tha-ap3:141.1": "Sāvako te mahāvīra,",
"tha-ap3:141.2": "assaji nāma brāhmaṇo;",
"tha-ap3:141.3": "Durāsado uggatejo,",
"tha-ap3:141.4": "piṇḍāya caratī tadā.",
"tha-ap3:142.1": "Tamaddasāsiṃ sappaññaṃ,",
"tha-ap3:142.2": "muniṃ mone samāhitaṃ;",
"tha-ap3:142.3": "Santacittaṃ mahānāgaṃ,",
"tha-ap3:142.4": "suphullaṃ padumaṃ yathā.",
"tha-ap3:143.1": "Disvā me cittamuppajji,",
"tha-ap3:143.2": "sudantaṃ suddhamānasaṃ;",
"tha-ap3:143.3": "Usabhaṃ pavaraṃ vīraṃ,",
"tha-ap3:143.4": "arahāyaṃ bhavissati.",
"tha-ap3:144.1": "Pāsādiko iriyati,",
"tha-ap3:144.2": "abhirūpo susaṃvuto;",
"tha-ap3:144.3": "Uttame damathe danto,",
"tha-ap3:144.4": "amatadassī bhavissati.",
"tha-ap3:145.1": "Yannūnāhaṃ uttamatthaṃ,",
"tha-ap3:145.2": "puccheyyaṃ tuṭṭhamānasaṃ;",
"tha-ap3:145.3": "So me puṭṭho kathessati,",
"tha-ap3:145.4": "paṭipucchāmahaṃ tadā.",
"tha-ap3:146.1": "Piṇḍapātaṃ carantassa,",
"tha-ap3:146.2": "pacchato agamāsahaṃ;",
"tha-ap3:146.3": "Okāsaṃ paṭimānento,",
"tha-ap3:146.4": "pucchituṃ amataṃ padaṃ.",
"tha-ap3:147.1": "Vīthintare anuppattaṃ,",
"tha-ap3:147.2": "upagantvāna pucchahaṃ;",
"tha-ap3:147.3": "‘Kathaṃ gottosi tvaṃ vīra,",
"tha-ap3:147.4": "kassa sissosi mārisa’.",
"tha-ap3:148.1": "So me puṭṭho viyākāsi,",
"tha-ap3:148.2": "asambhītova kesarī;",
"tha-ap3:148.3": "‘Buddho loke samuppanno,",
"tha-ap3:148.4": "tassa sissomhi āvuso’.",
"tha-ap3:149.1": "‘Kīdisaṃ te mahāvīra,",
"tha-ap3:149.2": "anujāta mahāyasa;",
"tha-ap3:149.3": "Buddhassa sāsanaṃ dhammaṃ,",
"tha-ap3:149.4": "sādhu me kathayassu bho’.",
"tha-ap3:150.1": "So me puṭṭho kathī sabbaṃ,",
"tha-ap3:150.2": "gambhīraṃ nipuṇaṃ padaṃ;",
"tha-ap3:150.3": "Taṇhāsallassa hantāraṃ,",
"tha-ap3:150.4": "sabbadukkhāpanūdanaṃ.",
"tha-ap3:151.1": "‘Ye dhammā hetuppabhavā,",
"tha-ap3:151.2": "Tesaṃ hetuṃ tathāgato āha;",
"tha-ap3:151.3": "Tesañca yo nirodho,",
"tha-ap3:151.4": "Evaṃvādī mahāsamaṇo’.",
"tha-ap3:152.1": "Sohaṃ vissajjite pañhe,",
"tha-ap3:152.2": "paṭhamaṃ phalamajjhagaṃ;",
"tha-ap3:152.3": "Virajo vimalo āsiṃ,",
"tha-ap3:152.4": "sutvāna jinasāsanaṃ.",
"tha-ap3:153.1": "Sutvāna munino vākyaṃ,",
"tha-ap3:153.2": "passitvā dhammamuttamaṃ;",
"tha-ap3:153.3": "Pariyogāḷhasaddhammo,",
"tha-ap3:153.4": "imaṃ gāthamabhāsahaṃ.",
"tha-ap3:154.1": "‘Eseva dhammo yadi tāvadeva,",
"tha-ap3:154.2": "Paccabyatha padamasokaṃ;",
"tha-ap3:154.3": "Adiṭṭhaṃ abbhatītaṃ,",
"tha-ap3:154.4": "Bahukehi kappanahutehi’.",
"tha-ap3:155.1": "Svāhaṃ dhammaṃ gavesanto,",
"tha-ap3:155.2": "kutitthe sañcariṃ ahaṃ;",
"tha-ap3:155.3": "So me attho anuppatto,",
"tha-ap3:155.4": "kālo me nappamajjituṃ.",
"tha-ap3:156.1": "Tositohaṃ assajinā,",
"tha-ap3:156.2": "patvāna acalaṃ padaṃ;",
"tha-ap3:156.3": "Sahāyakaṃ gavesanto,",
"tha-ap3:156.4": "assamaṃ agamāsahaṃ.",
"tha-ap3:157.1": "Dūratova mamaṃ disvā,",
"tha-ap3:157.2": "sahāyo me susikkhito;",
"tha-ap3:157.3": "Iriyāpathasampanno,",
"tha-ap3:157.4": "idaṃ vacanamabravi.",
"tha-ap3:158.1": "‘Pasannamukhanettosi,",
"tha-ap3:158.2": "munibhāvova dissati;",
"tha-ap3:158.3": "Amatādhigato kacci,",
"tha-ap3:158.4": "nibbānamaccutaṃ padaṃ.",
"tha-ap3:159.1": "Subhānurūpo āyāsi,",
"tha-ap3:159.2": "āneñjakārito viya;",
"tha-ap3:159.3": "Dantova dantadamatho,",
"tha-ap3:159.4": "upasantosi brāhmaṇa’.",
"tha-ap3:160.1": "‘Amataṃ mayādhigataṃ,",
"tha-ap3:160.2": "sokasallāpanūdanaṃ;",
"tha-ap3:160.3": "Tvampi taṃ adhigacchesi,",
"tha-ap3:160.4": "gacchāma buddhasantikaṃ’.",
"tha-ap3:161.1": "Sādhūti so paṭissutvā,",
"tha-ap3:161.2": "sahāyo me susikkhito;",
"tha-ap3:161.3": "Hatthena hatthaṃ gaṇhitvā,",
"tha-ap3:161.4": "upagamma tavantikaṃ.",
"tha-ap3:162.1": "Ubhopi pabbajissāma,",
"tha-ap3:162.2": "sakyaputta tavantike;",
"tha-ap3:162.3": "Tava sāsanamāgamma,",
"tha-ap3:162.4": "viharāma anāsavā.",
"tha-ap3:163.1": "Kolito iddhiyā seṭṭho,",
"tha-ap3:163.2": "ahaṃ paññāya pārago;",
"tha-ap3:163.3": "Ubhova ekato hutvā,",
"tha-ap3:163.4": "sāsanaṃ sobhayāmase.",
"tha-ap3:164.1": "Apariyositasaṅkappo,",
"tha-ap3:164.2": "kutitthe sañcariṃ ahaṃ;",
"tha-ap3:164.3": "Tava dassanamāgamma,",
"tha-ap3:164.4": "saṅkappo pūrito mama.",
"tha-ap3:165.1": "Pathaviyaṃ patiṭṭhāya,",
"tha-ap3:165.2": "pupphanti samaye dumā;",
"tha-ap3:165.3": "Dibbagandhā sampavanti,",
"tha-ap3:165.4": "tosenti sabbapāṇinaṃ.",
"tha-ap3:166.1": "Tathevāhaṃ mahāvīra,",
"tha-ap3:166.2": "sakyaputta mahāyasa;",
"tha-ap3:166.3": "Sāsane te patiṭṭhāya,",
"tha-ap3:166.4": "samayesāmi pupphituṃ.",
"tha-ap3:167.1": "Vimuttipupphaṃ esanto,",
"tha-ap3:167.2": "bhavasaṃsāramocanaṃ;",
"tha-ap3:167.3": "Vimuttipupphalābhena,",
"tha-ap3:167.4": "tosemi sabbapāṇinaṃ.",
"tha-ap3:168.1": "Yāvatā buddhakhettamhi,",
"tha-ap3:168.2": "ṭhapetvāna mahāmuniṃ;",
"tha-ap3:168.3": "Paññāya sadiso natthi,",
"tha-ap3:168.4": "tava puttassa cakkhuma.",
"tha-ap3:169.1": "Suvinītā ca te sissā,",
"tha-ap3:169.2": "parisā ca susikkhitā;",
"tha-ap3:169.3": "Uttame damathe dantā,",
"tha-ap3:169.4": "parivārenti taṃ sadā.",
"tha-ap3:170.1": "Jhāyī jhānaratā dhīrā,",
"tha-ap3:170.2": "santacittā samāhitā;",
"tha-ap3:170.3": "Munī moneyyasampannā,",
"tha-ap3:170.4": "parivārenti taṃ sadā.",
"tha-ap3:171.1": "Appicchā nipakā dhīrā,",
"tha-ap3:171.2": "appāhārā alolupā;",
"tha-ap3:171.3": "Lābhālābhena santuṭṭhā,",
"tha-ap3:171.4": "parivārenti taṃ sadā.",
"tha-ap3:172.1": "Āraññikā dhutaratā,",
"tha-ap3:172.2": "jhāyino lūkhacīvarā;",
"tha-ap3:172.3": "Vivekābhiratā dhīrā,",
"tha-ap3:172.4": "parivārenti taṃ sadā.",
"tha-ap3:173.1": "Paṭipannā phalaṭṭhā ca,",
"tha-ap3:173.2": "sekhā phalasamaṅgino;",
"tha-ap3:173.3": "Āsīsakā uttamatthaṃ,",
"tha-ap3:173.4": "parivārenti taṃ sadā.",
"tha-ap3:174.1": "Sotāpannā ca vimalā,",
"tha-ap3:174.2": "sakadāgāmino ca ye;",
"tha-ap3:174.3": "Anāgāmī ca arahā,",
"tha-ap3:174.4": "parivārenti taṃ sadā.",
"tha-ap3:175.1": "Satipaṭṭhānakusalā,",
"tha-ap3:175.2": "bojjhaṅgabhāvanāratā;",
"tha-ap3:175.3": "Sāvakā te bahū sabbe,",
"tha-ap3:175.4": "parivārenti taṃ sadā.",
"tha-ap3:176.1": "Iddhipādesu kusalā,",
"tha-ap3:176.2": "samādhibhāvanāratā;",
"tha-ap3:176.3": "Sammappadhānānuyuttā,",
"tha-ap3:176.4": "parivārenti taṃ sadā.",
"tha-ap3:177.1": "Tevijjā chaḷabhiññā ca,",
"tha-ap3:177.2": "iddhiyā pāramiṃ gatā;",
"tha-ap3:177.3": "Paññāya pāramiṃ pattā,",
"tha-ap3:177.4": "parivārenti taṃ sadā.",
"tha-ap3:178.1": "Edisā te mahāvīra,",
"tha-ap3:178.2": "tava sissā susikkhitā;",
"tha-ap3:178.3": "Durāsadā uggatejā,",
"tha-ap3:178.4": "parivārenti taṃ sadā.",
"tha-ap3:179.1": "Tehi sissehi parivuto,",
"tha-ap3:179.2": "saññatehi tapassibhi;",
"tha-ap3:179.3": "Migarājāvasambhīto,",
"tha-ap3:179.4": "uḷurājāva sobhasi.",
"tha-ap3:180.1": "Pathaviyaṃ patiṭṭhāya,",
"tha-ap3:180.2": "ruhanti dharaṇīruhā;",
"tha-ap3:180.3": "Vepullataṃ pāpuṇanti,",
"tha-ap3:180.4": "phalañca dassayanti te.",
"tha-ap3:181.1": "Pathavīsadiso tvaṃsi,",
"tha-ap3:181.2": "sakyaputta mahāyasa;",
"tha-ap3:181.3": "Sāsane te patiṭṭhāya,",
"tha-ap3:181.4": "labhanti amataṃ phalaṃ.",
"tha-ap3:182.1": "Sindhu sarassatī ceva,",
"tha-ap3:182.2": "nadiyo candabhāgikā;",
"tha-ap3:182.3": "Gaṅgā ca yamunā ceva,",
"tha-ap3:182.4": "sarabhū ca atho mahī.",
"tha-ap3:183.1": "Etāsaṃ sandamānānaṃ,",
"tha-ap3:183.2": "sāgaro sampaṭicchati;",
"tha-ap3:183.3": "Jahanti purimaṃ nāmaṃ,",
"tha-ap3:183.4": "sāgaroteva ñāyati.",
"tha-ap3:184.1": "Tathevime catubbaṇṇā,",
"tha-ap3:184.2": "pabbajitvā tavantike;",
"tha-ap3:184.3": "Jahanti purimaṃ nāmaṃ,",
"tha-ap3:184.4": "buddhaputtāti ñāyare.",
"tha-ap3:185.1": "Yathāpi cando vimalo,",
"tha-ap3:185.2": "gacchaṃ ākāsadhātuyā;",
"tha-ap3:185.3": "Sabbe tāragaṇe loke,",
"tha-ap3:185.4": "ābhāya atirocati.",
"tha-ap3:186.1": "Tatheva tvaṃ mahāvīra,",
"tha-ap3:186.2": "parivuto devamānuse;",
"tha-ap3:186.3": "Ete sabbe atikkamma,",
"tha-ap3:186.4": "jalasi sabbadā tuvaṃ.",
"tha-ap3:187.1": "Gambhīre uṭṭhitā ūmī,",
"tha-ap3:187.2": "na velamativattare;",
"tha-ap3:187.3": "Sabbā velaṃva phusanti,",
"tha-ap3:187.4": "sañcuṇṇā vikiranti tā.",
"tha-ap3:188.1": "Tatheva titthiyā loke,",
"tha-ap3:188.2": "nānādiṭṭhī bahujjanā;",
"tha-ap3:188.3": "Dhammaṃ vāditukāmā te,",
"tha-ap3:188.4": "nātivattanti taṃ muniṃ.",
"tha-ap3:189.1": "Sace ca taṃ pāpuṇanti,",
"tha-ap3:189.2": "paṭivādehi cakkhuma;",
"tha-ap3:189.3": "Tavantikaṃ upāgantvā,",
"tha-ap3:189.4": "sañcuṇṇāva bhavanti te.",
"tha-ap3:190.1": "Yathāpi udake jātā,",
"tha-ap3:190.2": "kumudā mandālakā bahū;",
"tha-ap3:190.3": "Upalimpanti toyena,",
"tha-ap3:190.4": "kaddamakalalena ca.",
"tha-ap3:191.1": "Tatheva bahukā sattā,",
"tha-ap3:191.2": "loke jātā virūhare;",
"tha-ap3:191.3": "Aṭṭitā rāgadosena,",
"tha-ap3:191.4": "kaddame kumudaṃ yathā.",
"tha-ap3:192.1": "Yathāpi padumaṃ jalajaṃ,",
"tha-ap3:192.2": "jalamajjhe virūhati;",
"tha-ap3:192.3": "Na so limpati toyena,",
"tha-ap3:192.4": "parisuddho hi kesarī.",
"tha-ap3:193.1": "Tatheva tvaṃ mahāvīra,",
"tha-ap3:193.2": "loke jāto mahāmuni;",
"tha-ap3:193.3": "Nopalimpasi lokena,",
"tha-ap3:193.4": "toyena padumaṃ yathā.",
"tha-ap3:194.1": "Yathāpi rammake māse,",
"tha-ap3:194.2": "bahū pupphanti vārijā;",
"tha-ap3:194.3": "Nātikkamanti taṃ māsaṃ,",
"tha-ap3:194.4": "samayo pupphanāya so.",
"tha-ap3:195.1": "Tatheva tvaṃ mahāvīra,",
"tha-ap3:195.2": "pupphito te vimuttiyā;",
"tha-ap3:195.3": "Sāsanaṃ nātivattanti,",
"tha-ap3:195.4": "padumaṃ vārijaṃ yathā.",
"tha-ap3:196.1": "Supupphito sālarājā,",
"tha-ap3:196.2": "dibbagandhaṃ pavāyati;",
"tha-ap3:196.3": "Aññasālehi parivuto,",
"tha-ap3:196.4": "sālarājāva sobhati.",
"tha-ap3:197.1": "Tatheva tvaṃ mahāvīra,",
"tha-ap3:197.2": "buddhañāṇena pupphito;",
"tha-ap3:197.3": "Bhikkhusaṃghaparivuto,",
"tha-ap3:197.4": "sālarājāva sobhasi.",
"tha-ap3:198.1": "Yathāpi selo himavā,",
"tha-ap3:198.2": "osadho sabbapāṇinaṃ;",
"tha-ap3:198.3": "Nāgānaṃ asurānañca,",
"tha-ap3:198.4": "devatānañca ālayo.",
"tha-ap3:199.1": "Tatheva tvaṃ mahāvīra,",
"tha-ap3:199.2": "osadho viya pāṇinaṃ;",
"tha-ap3:199.3": "Tevijjā chaḷabhiññā ca,",
"tha-ap3:199.4": "iddhiyā pāramiṃ gatā.",
"tha-ap3:200.1": "Anusiṭṭhā mahāvīra,",
"tha-ap3:200.2": "tayā kāruṇikena te;",
"tha-ap3:200.3": "Ramanti dhammaratiyā,",
"tha-ap3:200.4": "vasanti tava sāsane.",
"tha-ap3:201.1": "Migarājā yathā sīho,",
"tha-ap3:201.2": "abhinikkhamma āsayā;",
"tha-ap3:201.3": "Catuddisānuviloketvā,",
"tha-ap3:201.4": "tikkhattuṃ abhinādati.",
"tha-ap3:202.1": "Sabbe migā uttasanti,",
"tha-ap3:202.2": "migarājassa gajjato;",
"tha-ap3:202.3": "Tathā hi jātimā eso,",
"tha-ap3:202.4": "pasū tāseti sabbadā.",
"tha-ap3:203.1": "Gajjato te mahāvīra,",
"tha-ap3:203.2": "vasudhā sampakampati;",
"tha-ap3:203.3": "Bodhaneyyāvabujjhanti,",
"tha-ap3:203.4": "tasanti mārakāyikā.",
"tha-ap3:204.1": "Tasanti titthiyā sabbe,",
"tha-ap3:204.2": "nadato te mahāmuni;",
"tha-ap3:204.3": "Kākā senāva vibbhantā,",
"tha-ap3:204.4": "migaraññā yathā migā.",
"tha-ap3:205.1": "Ye keci gaṇino loke,",
"tha-ap3:205.2": "satthāroti pavuccare;",
"tha-ap3:205.3": "Paramparāgataṃ dhammaṃ,",
"tha-ap3:205.4": "desenti parisāya te.",
"tha-ap3:206.1": "Na hevaṃ tvaṃ mahāvīra,",
"tha-ap3:206.2": "dhammaṃ desesi pāṇinaṃ;",
"tha-ap3:206.3": "Sāmaṃ saccāni bujjhitvā,",
"tha-ap3:206.4": "kevalaṃ bodhipakkhiyaṃ.",
"tha-ap3:207.1": "Āsayānusayaṃ ñatvā,",
"tha-ap3:207.2": "indriyānaṃ balābalaṃ;",
"tha-ap3:207.3": "Bhabbābhabbe viditvāna,",
"tha-ap3:207.4": "mahāmeghova gajjasi.",
"tha-ap3:208.1": "Cakkavāḷapariyantā,",
"tha-ap3:208.2": "nisinnā parisā bhave;",
"tha-ap3:208.3": "Nānādiṭṭhī vicinantā,",
"tha-ap3:208.4": "vimaticchedanāya taṃ.",
"tha-ap3:209.1": "Sabbesaṃ cittamaññāya,",
"tha-ap3:209.2": "opammakusalo muni;",
"tha-ap3:209.3": "Ekaṃ pañhaṃ kathentova,",
"tha-ap3:209.4": "vimatiṃ chindasi pāṇinaṃ.",
"tha-ap3:210.1": "Upatissasadiseheva,",
"tha-ap3:210.2": "vasudhā pūritā bhave;",
"tha-ap3:210.3": "Sabbeva te pañjalikā,",
"tha-ap3:210.4": "kittayuṃ lokanāyakaṃ.",
"tha-ap3:211.1": "Kappaṃ vā te kittayantā,",
"tha-ap3:211.2": "nānāvaṇṇehi kittayuṃ;",
"tha-ap3:211.3": "Parimetuṃ na sakkeyyuṃ,",
"tha-ap3:211.4": "appameyyo tathāgato.",
"tha-ap3:212.1": "Yathāsakena thāmena,",
"tha-ap3:212.2": "kittito hi mayā jino;",
"tha-ap3:212.3": "Kappakoṭīpi kittentā,",
"tha-ap3:212.4": "evamevaṃ pakittayuṃ.",
"tha-ap3:213.1": "Sace hi koci devo vā,",
"tha-ap3:213.2": "manusso vā susikkhito;",
"tha-ap3:213.3": "Pametuṃ parikappeyya,",
"tha-ap3:213.4": "vighātaṃva labheyya so.",
"tha-ap3:214.1": "Sāsane te patiṭṭhāya,",
"tha-ap3:214.2": "sakyaputta mahāyasa;",
"tha-ap3:214.3": "Paññāya pāramiṃ gantvā,",
"tha-ap3:214.4": "viharāmi anāsavo.",
"tha-ap3:215.1": "Titthiye sampamaddāmi,",
"tha-ap3:215.2": "vattemi jinasāsanaṃ;",
"tha-ap3:215.3": "Dhammasenāpati ajja,",
"tha-ap3:215.4": "sakyaputtassa sāsane.",
"tha-ap3:216.1": "Aparimeyye kataṃ kammaṃ,",
"tha-ap3:216.2": "phalaṃ dassesi me idha;",
"tha-ap3:216.3": "Sukhitto saravegova,",
"tha-ap3:216.4": "kilese jhāpayī mama.",
"tha-ap3:217.1": "Yo koci manujo bhāraṃ,",
"tha-ap3:217.2": "dhāreyya matthake sadā;",
"tha-ap3:217.3": "Bhārena dukkhito assa,",
"tha-ap3:217.4": "bhārehi bharito tathā.",
"tha-ap3:218.1": "Ḍayhamāno tīhaggīhi,",
"tha-ap3:218.2": "bhavesu saṃsariṃ ahaṃ;",
"tha-ap3:218.3": "Bharito bhavabhārena,",
"tha-ap3:218.4": "giriṃ uccārito yathā.",
"tha-ap3:219.1": "Oropito ca me bhāro,",
"tha-ap3:219.2": "bhavā ugghāṭitā mayā;",
"tha-ap3:219.3": "Karaṇīyaṃ kataṃ sabbaṃ,",
"tha-ap3:219.4": "sakyaputtassa sāsane.",
"tha-ap3:220.1": "Yāvatā buddhakhettamhi,",
"tha-ap3:220.2": "ṭhapetvā sakyapuṅgavaṃ;",
"tha-ap3:220.3": "Ahaṃ aggomhi paññāya,",
"tha-ap3:220.4": "sadiso me na vijjati.",
"tha-ap3:221.1": "Samādhimhi sukusalo,",
"tha-ap3:221.2": "iddhiyā pāramiṃ gato;",
"tha-ap3:221.3": "Icchamāno cahaṃ ajja,",
"tha-ap3:221.4": "sahassaṃ abhinimmine.",
"tha-ap3:222.1": "Anupubbavihārassa,",
"tha-ap3:222.2": "vasībhūto mahāmuni;",
"tha-ap3:222.3": "Kathesi sāsanaṃ mayhaṃ,",
"tha-ap3:222.4": "nirodho sayanaṃ mama.",
"tha-ap3:223.1": "Dibbacakkhu visuddhaṃ me,",
"tha-ap3:223.2": "samādhikusalo ahaṃ;",
"tha-ap3:223.3": "Sammappadhānānuyutto,",
"tha-ap3:223.4": "bojjhaṅgabhāvanārato.",
"tha-ap3:224.1": "Sāvakena hi pattabbaṃ,",
"tha-ap3:224.2": "sabbameva kataṃ mayā;",
"tha-ap3:224.3": "Lokanāthaṃ ṭhapetvāna,",
"tha-ap3:224.4": "sadiso me na vijjati.",
"tha-ap3:225.1": "Samāpattīnaṃ kusalo,",
"tha-ap3:225.2": "Jhānavimokkhāna khippapaṭilābhī;",
"tha-ap3:225.3": "Bojjhaṅgabhāvanārato,",
"tha-ap3:225.4": "Sāvakaguṇapāramigatosmi.",
"tha-ap3:226.1": "Sāvakaguṇenapi phussena,",
"tha-ap3:226.2": "Buddhiyā parisuttamabhāravā;",
"tha-ap3:226.3": "Yaṃ saddhāsaṅgahitaṃ cittaṃ,",
"tha-ap3:226.4": "Sadā sabrahmacārīsu.",
"tha-ap3:227.1": "Uddhatavisova sappo,",
"tha-ap3:227.2": "Chinnavisāṇova usabho;",
"tha-ap3:227.3": "Nikkhittamānadappova,",
"tha-ap3:227.4": "Upemi garugāravena gaṇaṃ.",
"tha-ap3:228.1": "Yadi rūpinī bhaveyya,",
"tha-ap3:228.2": "Paññā me vasumatīpi na sameyya;",
"tha-ap3:228.3": "Anomadassissa bhagavato,",
"tha-ap3:228.4": "Phalametaṃ ñāṇathavanāya.",
"tha-ap3:229.1": "Pavattitaṃ dhammacakkaṃ,",
"tha-ap3:229.2": "sakyaputtena tādinā;",
"tha-ap3:229.3": "Anuvattemahaṃ sammā,",
"tha-ap3:229.4": "ñāṇathavanāyidaṃ phalaṃ.",
"tha-ap3:230.1": "Mā me kadāci pāpiccho,",
"tha-ap3:230.2": "kusīto hīnavīriyo;",
"tha-ap3:230.3": "Appassuto anācāro,",
"tha-ap3:230.4": "sameto ahu katthaci.",
"tha-ap3:231.1": "Bahussuto ca medhāvī,",
"tha-ap3:231.2": "sīlesu susamāhito;",
"tha-ap3:231.3": "Cetosamathānuyutto,",
"tha-ap3:231.4": "api muddhani tiṭṭhatu.",
"tha-ap3:232.1": "Taṃ vo vadāmi bhaddante,",
"tha-ap3:232.2": "yāvantettha samāgatā;",
"tha-ap3:232.3": "Appicchā hotha santuṭṭhā,",
"tha-ap3:232.4": "jhāyī jhānaratā sadā.",
"tha-ap3:233.1": "Yamahaṃ paṭhamaṃ disvā,",
"tha-ap3:233.2": "virajo vimalo ahuṃ;",
"tha-ap3:233.3": "So me ācariyo dhīro,",
"tha-ap3:233.4": "assaji nāma sāvako.",
"tha-ap3:234.1": "Tassāhaṃ vāhasā ajja,",
"tha-ap3:234.2": "dhammasenāpatī ahuṃ;",
"tha-ap3:234.3": "Sabbattha pāramiṃ patvā,",
"tha-ap3:234.4": "viharāmi anāsavo.",
"tha-ap3:235.1": "Yo me ācariyo āsi,",
"tha-ap3:235.2": "assaji nāma sāvako;",
"tha-ap3:235.3": "Yassaṃ disāyaṃ vasati,",
"tha-ap3:235.4": "ussīsamhi karomahaṃ.",
"tha-ap3:236.1": "Mama kammaṃ saritvāna,",
"tha-ap3:236.2": "gotamo sakyapuṅgavo;",
"tha-ap3:236.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap3:236.4": "aggaṭṭhāne ṭhapesi maṃ.",
"tha-ap3:237.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap3:237.2": "bhavā sabbe samūhatā;",
"tha-ap3:237.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap3:237.4": "viharāmi anāsavo.",
"tha-ap3:238.1": "Svāgataṃ vata me āsi,",
"tha-ap3:238.2": "buddhaseṭṭhassa santike;",
"tha-ap3:238.3": "Tisso vijjā anuppattā,",
"tha-ap3:238.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap3:239.1": "Paṭisambhidā catasso,",
"tha-ap3:239.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap3:239.3": "Chaḷabhiññā sacchikatā,",
"tha-ap3:239.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap3:240.1": "Itthaṃ sudaṃ āyasmā sāriputto thero imā gāthāyo abhāsitthāti.",
"tha-ap3:241.1": "Sāriputtattherassāpadānaṃ paṭhamaṃ."
}