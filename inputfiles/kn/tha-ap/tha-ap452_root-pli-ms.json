{
"tha-ap452:1.1": "Therāpadāna",
"tha-ap452:2.1": "Vibhītakavagga",
"tha-ap452:3.1": "10 Bodhigharadāyakattheraapadāna",
"tha-ap452:4.1": "“Siddhatthassa bhagavato,",
"tha-ap452:4.2": "dvipadindassa tādino;",
"tha-ap452:4.3": "Pasannacitto sumano,",
"tha-ap452:4.4": "bodhigharamakārayiṃ.",
"tha-ap452:5.1": "Tusitaṃ upapannomhi,",
"tha-ap452:5.2": "vasāmi ratane ghare;",
"tha-ap452:5.3": "Na me sītaṃ vā uṇhaṃ vā,",
"tha-ap452:5.4": "vāto gatte na samphuse.",
"tha-ap452:6.1": "Pañcasaṭṭhimhito kappe,",
"tha-ap452:6.2": "cakkavattī ahosahaṃ;",
"tha-ap452:6.3": "Kāsikaṃ nāma nagaraṃ,",
"tha-ap452:6.4": "vissakammena māpitaṃ.",
"tha-ap452:7.1": "Dasayojanaāyāmaṃ,",
"tha-ap452:7.2": "aṭṭhayojanavitthataṃ;",
"tha-ap452:7.3": "Na tamhi nagare atthi,",
"tha-ap452:7.4": "kaṭṭhaṃ vallī ca mattikā.",
"tha-ap452:8.1": "Tiriyaṃ yojanaṃ āsi,",
"tha-ap452:8.2": "addhayojanavitthataṃ;",
"tha-ap452:8.3": "Maṅgalo nāma pāsādo,",
"tha-ap452:8.4": "vissakammena māpito.",
"tha-ap452:9.1": "Cullāsītisahassāni,",
"tha-ap452:9.2": "thambhā soṇṇamayā ahuṃ;",
"tha-ap452:9.3": "Maṇimayā ca niyyūhā,",
"tha-ap452:9.4": "chadanaṃ rūpiyaṃ ahu.",
"tha-ap452:10.1": "Sabbasoṇṇamayaṃ gharaṃ,",
"tha-ap452:10.2": "vissakammena māpitaṃ;",
"tha-ap452:10.3": "Ajjhāvutthaṃ mayā etaṃ,",
"tha-ap452:10.4": "gharadānassidaṃ phalaṃ.",
"tha-ap452:11.1": "Te sabbe anubhotvāna,",
"tha-ap452:11.2": "devamānusake bhave;",
"tha-ap452:11.3": "Ajjhapattomhi nibbānaṃ,",
"tha-ap452:11.4": "santipadamanuttaraṃ.",
"tha-ap452:12.1": "Tiṃsakappasahassamhi,",
"tha-ap452:12.2": "bodhigharamakārayiṃ;",
"tha-ap452:12.3": "Duggatiṃ nābhijānāmi,",
"tha-ap452:12.4": "gharadānassidaṃ phalaṃ.",
"tha-ap452:13.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap452:13.4": "viharāmi anāsavo.",
"tha-ap452:14.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap452:14.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap452:15.1": "Paṭisambhidā catasso, … pe …",
"tha-ap452:15.4": "kataṃ buddhassa sāsanaṃ”. #4704",
"tha-ap452:16.1": "Itthaṃ sudaṃ āyasmā bodhigharadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap452:17.1": "Bodhigharadāyakattherassāpadānaṃ dasamaṃ.",
"tha-ap452:18.1": "Vibhītakavaggo pañcacattālīsamo.",
"tha-ap452:19.1": "Tassuddānaṃ",
"tha-ap452:20.1": "Vibhītakī kolaphalī,",
"tha-ap452:20.2": "billabhallātakappado;",
"tha-ap452:20.3": "Uttalambaṭakī ceva,",
"tha-ap452:20.4": "āsanī pādapīṭhako.",
"tha-ap452:21.1": "Vediko bodhighariko,",
"tha-ap452:21.2": "gāthāyo gaṇitāpi ca;",
"tha-ap452:21.3": "Ekūnāsītikā sabbā,",
"tha-ap452:21.4": "asmiṃ vagge pakittitā."
}