{
"tha-ap165:1.1": "Therāpadāna",
"tha-ap165:2.1": "Supāricariyavagga",
"tha-ap165:3.1": "3. Khajjakadāyakattheraapadāna",
"tha-ap165:4.1": "“Tissassa kho bhagavato,",
"tha-ap165:4.2": "pubbe phalamadāsahaṃ;",
"tha-ap165:4.3": "Nāḷikerañca pādāsiṃ,",
"tha-ap165:4.4": "khajjakaṃ abhisammataṃ.",
"tha-ap165:5.1": "Buddhassa tamahaṃ datvā,",
"tha-ap165:5.2": "Tissassa tu mahesino;",
"tha-ap165:5.3": "Modāmahaṃ kāmakāmī,",
"tha-ap165:5.4": "Upapajjiṃ yamicchakaṃ.",
"tha-ap165:6.1": "Dvenavute ito kappe,",
"tha-ap165:6.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap165:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap165:6.4": "phaladānassidaṃ phalaṃ.",
"tha-ap165:7.1": "Ito terasakappamhi,",
"tha-ap165:7.2": "rājā indasamo ahu;",
"tha-ap165:7.3": "Sattaratanasampanno,",
"tha-ap165:7.4": "cakkavattī mahabbalo.",
"tha-ap165:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap165:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap165:9.1": "Itthaṃ sudaṃ āyasmā khajjakadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap165:10.1": "Khajjakadāyakattherassāpadānaṃ tatiyaṃ."
}