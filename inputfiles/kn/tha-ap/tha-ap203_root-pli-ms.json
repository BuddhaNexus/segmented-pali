{
"tha-ap203:1.1": "Therāpadāna",
"tha-ap203:2.1": "Kaṇikārapupphiyavagga",
"tha-ap203:3.1": "1. Kaṇikārapupphiyattheraapadāna",
"tha-ap203:4.1": "“Kaṇikāraṃ pupphitaṃ disvā,",
"tha-ap203:4.2": "ocinitvānahaṃ tadā;",
"tha-ap203:4.3": "Tissassa abhiropesiṃ,",
"tha-ap203:4.4": "oghatiṇṇassa tādino.",
"tha-ap203:5.1": "Dvenavute ito kappe,",
"tha-ap203:5.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap203:5.3": "Duggatiṃ nābhijānāmi,",
"tha-ap203:5.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap203:6.1": "Pañcattiṃse ito kappe,",
"tha-ap203:6.2": "aruṇapāṇīti vissuto;",
"tha-ap203:6.3": "Sattaratanasampanno,",
"tha-ap203:6.4": "cakkavattī mahabbalo.",
"tha-ap203:7.1": "Paṭisambhidā catasso,",
"tha-ap203:7.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap203:7.3": "Chaḷabhiññā sacchikatā,",
"tha-ap203:7.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap203:8.1": "Itthaṃ sudaṃ āyasmā kaṇikārapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap203:9.1": "Kaṇikārapupphiyattherassāpadānaṃ paṭhamaṃ."
}