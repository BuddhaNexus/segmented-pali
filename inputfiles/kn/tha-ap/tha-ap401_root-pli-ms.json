{
"tha-ap401:1.1": "Therāpadāna",
"tha-ap401:2.1": "Pilindavacchavagga",
"tha-ap401:3.1": "9. Sabbadāyakattheraapadāna",
"tha-ap401:4.1": "“Mahāsamuddaṃ ogayha,",
"tha-ap401:4.2": "bhavanaṃ me sunimmitaṃ;",
"tha-ap401:4.3": "Sunimmitā pokkharaṇī,",
"tha-ap401:4.4": "cakkavākapakūjitā.",
"tha-ap401:5.1": "Mandālakehi sañchannā,",
"tha-ap401:5.2": "padumuppalakehi ca;",
"tha-ap401:5.3": "Nadī ca sandate tattha,",
"tha-ap401:5.4": "supatitthā manoramā.",
"tha-ap401:6.1": "Macchakacchapasañchannā,",
"tha-ap401:6.2": "nānādijasamotthatā;",
"tha-ap401:6.3": "Mayūrakoñcābhirudā,",
"tha-ap401:6.4": "kokilādīhi vagguhi.",
"tha-ap401:7.1": "Pārevatā ravihaṃsā ca,",
"tha-ap401:7.2": "cakkavākā nadīcarā;",
"tha-ap401:7.3": "Dindibhā sāḷikā cettha,",
"tha-ap401:7.4": "pampakā jīvajīvakā.",
"tha-ap401:8.1": "Haṃsā koñcāpi naditā,",
"tha-ap401:8.2": "kosiyā piṅgalā bahū;",
"tha-ap401:8.3": "Sattaratanasampannā,",
"tha-ap401:8.4": "maṇimuttikavālukā.",
"tha-ap401:9.1": "Sabbasoṇṇamayā rukkhā,",
"tha-ap401:9.2": "nānāgandhasameritā;",
"tha-ap401:9.3": "Ujjotenti divārattiṃ,",
"tha-ap401:9.4": "bhavanaṃ sabbakālikaṃ.",
"tha-ap401:10.1": "Saṭṭhi tūriyasahassāni,",
"tha-ap401:10.2": "sāyaṃ pāto pavajjare;",
"tha-ap401:10.3": "Soḷasitthisahassāni,",
"tha-ap401:10.4": "parivārenti maṃ sadā.",
"tha-ap401:11.1": "Abhinikkhamma bhavanā,",
"tha-ap401:11.2": "sumedhaṃ lokanāyakaṃ;",
"tha-ap401:11.3": "Pasannacitto sumano,",
"tha-ap401:11.4": "vandayiṃ taṃ mahāyasaṃ.",
"tha-ap401:12.1": "Sambuddhaṃ abhivādetvā,",
"tha-ap401:12.2": "sasaṃghaṃ taṃ nimantayiṃ;",
"tha-ap401:12.3": "Adhivāsesi so dhīro,",
"tha-ap401:12.4": "sumedho lokanāyako.",
"tha-ap401:13.1": "Mama dhammakathaṃ katvā,",
"tha-ap401:13.2": "uyyojesi mahāmuni;",
"tha-ap401:13.3": "Sambuddhaṃ abhivādetvā,",
"tha-ap401:13.4": "bhavanaṃ me upāgamiṃ.",
"tha-ap401:14.1": "Āmantayiṃ parijanaṃ,",
"tha-ap401:14.2": "‘sabbe sannipatātha vo;",
"tha-ap401:14.3": "Pubbaṇhasamayaṃ buddho,",
"tha-ap401:14.4": "bhavanaṃ āgamissati.",
"tha-ap401:15.1": "Lābhā amhaṃ suladdhaṃ no,",
"tha-ap401:15.2": "ye vasāma tavantike;",
"tha-ap401:15.3": "Mayampi buddhaseṭṭhassa,",
"tha-ap401:15.4": "pūjaṃ kassāma satthuno’.",
"tha-ap401:16.1": "Annapānaṃ paṭṭhapetvā,",
"tha-ap401:16.2": "kālaṃ ārocayiṃ ahaṃ;",
"tha-ap401:16.3": "Vasīsatasahassehi,",
"tha-ap401:16.4": "upesi lokanāyako.",
"tha-ap401:17.1": "Pañcaṅgikehi tūriyehi,",
"tha-ap401:17.2": "paccuggamanamakāsahaṃ;",
"tha-ap401:17.3": "Sabbasoṇṇamaye pīṭhe,",
"tha-ap401:17.4": "nisīdi purisuttamo.",
"tha-ap401:18.1": "Uparicchadanaṃ āsi,",
"tha-ap401:18.2": "sabbasoṇṇamayaṃ tadā;",
"tha-ap401:18.3": "Bījaniyo pavāyanti,",
"tha-ap401:18.4": "bhikkhusaṃghassa antare.",
"tha-ap401:19.1": "Pahūtenannapānena,",
"tha-ap401:19.2": "bhikkhusaṃghamatappayiṃ;",
"tha-ap401:19.3": "Paccekadussayugaḷe,",
"tha-ap401:19.4": "bhikkhusaṃghassadāsahaṃ.",
"tha-ap401:20.1": "Yaṃ vadanti sumedhoti,",
"tha-ap401:20.2": "lokāhutipaṭiggahaṃ;",
"tha-ap401:20.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap401:20.4": "imā gāthā abhāsatha.",
"tha-ap401:21.1": "‘Yo me annena pānena,",
"tha-ap401:21.2": "sabbe ime ca tappayiṃ;",
"tha-ap401:21.3": "Tamahaṃ kittayissāmi,",
"tha-ap401:21.4": "suṇātha mama bhāsato.",
"tha-ap401:22.1": "Aṭṭhārase kappasate,",
"tha-ap401:22.2": "devaloke ramissati;",
"tha-ap401:22.3": "Sahassakkhattuṃ rājā ca,",
"tha-ap401:22.4": "cakkavattī bhavissati.",
"tha-ap401:23.1": "Upapajjati yaṃ yoniṃ,",
"tha-ap401:23.2": "devattaṃ atha mānusaṃ;",
"tha-ap401:23.3": "Sabbadā sabbasovaṇṇaṃ,",
"tha-ap401:23.4": "chadanaṃ dhārayissati.",
"tha-ap401:24.1": "Tiṃsakappasahassamhi,",
"tha-ap401:24.2": "okkākakulasambhavo;",
"tha-ap401:24.3": "Gotamo nāma gottena,",
"tha-ap401:24.4": "satthā loke bhavissati.",
"tha-ap401:25.1": "Tassa dhammesu dāyādo,",
"tha-ap401:25.2": "oraso dhammanimmito;",
"tha-ap401:25.3": "Sabbāsave pariññāya,",
"tha-ap401:25.4": "nibbāyissatināsavo.",
"tha-ap401:26.1": "Bhikkhusaṃghe nisīditvā,",
"tha-ap401:26.2": "sīhanādaṃ nadissati;",
"tha-ap401:26.3": "Citake chattaṃ dhārenti,",
"tha-ap401:26.4": "heṭṭhā chattamhi ḍayhatha’.",
"tha-ap401:27.1": "Sāmaññaṃ me anuppattaṃ,",
"tha-ap401:27.2": "kilesā jhāpitā mayā;",
"tha-ap401:27.3": "Maṇḍape rukkhamūle vā,",
"tha-ap401:27.4": "santāpo me na vijjati.",
"tha-ap401:28.1": "Tiṃsakappasahassamhi,",
"tha-ap401:28.2": "yaṃ dānamadadiṃ tadā;",
"tha-ap401:28.3": "Duggatiṃ nābhijānāmi,",
"tha-ap401:28.4": "sabbadānassidaṃ phalaṃ.",
"tha-ap401:29.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap401:29.4": "viharāmi anāsavo.",
"tha-ap401:30.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap401:30.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap401:31.1": "Paṭisambhidā catasso, … pe …",
"tha-ap401:31.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap401:32.1": "Itthaṃ sudaṃ āyasmā sabbadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap401:33.1": "Sabbadāyakattherassāpadānaṃ navamaṃ."
}