{
"tha-ap424:1.1": "Therāpadāna",
"tha-ap424:2.1": "Sakiṃsammajjakavagga",
"tha-ap424:3.1": "2. Ekadussadāyakattheraapadāna",
"tha-ap424:4.1": "“Nagare haṃsavatiyā,",
"tha-ap424:4.2": "ahosiṃ tiṇahārako;",
"tha-ap424:4.3": "Tiṇahārena jīvāmi,",
"tha-ap424:4.4": "tena posemi dārake.",
"tha-ap424:5.1": "Padumuttaro nāma jino,",
"tha-ap424:5.2": "sabbadhammāna pāragū;",
"tha-ap424:5.3": "Tamandhakāraṃ nāsetvā,",
"tha-ap424:5.4": "uppajji lokanāyako.",
"tha-ap424:6.1": "Sake ghare nisīditvā,",
"tha-ap424:6.2": "evaṃ cintesi tāvade;",
"tha-ap424:6.3": "‘Buddho loke samuppanno,",
"tha-ap424:6.4": "deyyadhammo na vijjati.",
"tha-ap424:7.1": "Idaṃ me sāṭakaṃ ekaṃ,",
"tha-ap424:7.2": "natthi me koci dāyako;",
"tha-ap424:7.3": "Dukkho nirayasamphasso,",
"tha-ap424:7.4": "ropayissāmi dakkhiṇaṃ’.",
"tha-ap424:8.1": "Evāhaṃ cintayitvāna,",
"tha-ap424:8.2": "sakaṃ cittaṃ pasādayiṃ;",
"tha-ap424:8.3": "Ekaṃ dussaṃ gahetvāna,",
"tha-ap424:8.4": "buddhaseṭṭhassadāsahaṃ.",
"tha-ap424:9.1": "Ekaṃ dussaṃ daditvāna,",
"tha-ap424:9.2": "ukkuṭṭhiṃ sampavattayiṃ;",
"tha-ap424:9.3": "‘Yadi buddho tuvaṃ vīra,",
"tha-ap424:9.4": "tārehi maṃ mahāmuni’.",
"tha-ap424:10.1": "Padumuttaro lokavidū,",
"tha-ap424:10.2": "āhutīnaṃ paṭiggaho;",
"tha-ap424:10.3": "Mama dānaṃ pakittento,",
"tha-ap424:10.4": "akā me anumodanaṃ.",
"tha-ap424:11.1": "‘Iminā ekadussena,",
"tha-ap424:11.2": "cetanāpaṇidhīhi ca;",
"tha-ap424:11.3": "Kappasatasahassāni,",
"tha-ap424:11.4": "vinipātaṃ na gacchasi.",
"tha-ap424:12.1": "Chattiṃsakkhattuṃ devindo,",
"tha-ap424:12.2": "devarajjaṃ karissasi;",
"tha-ap424:12.3": "Tettiṃsakkhattuṃ rājā ca,",
"tha-ap424:12.4": "cakkavattī bhavissasi.",
"tha-ap424:13.1": "Padesarajjaṃ vipulaṃ,",
"tha-ap424:13.2": "gaṇanāto asaṅkhiyaṃ;",
"tha-ap424:13.3": "Devaloke manusse vā,",
"tha-ap424:13.4": "saṃsaranto tuvaṃ bhave.",
"tha-ap424:14.1": "Rūpavā guṇasampanno,",
"tha-ap424:14.2": "anavakkantadehavā;",
"tha-ap424:14.3": "Akkhobhaṃ amitaṃ dussaṃ,",
"tha-ap424:14.4": "labhissasi yadicchakaṃ’.",
"tha-ap424:15.1": "Idaṃ vatvāna sambuddho,",
"tha-ap424:15.2": "jalajuttamanāmako;",
"tha-ap424:15.3": "Nabhaṃ abbhuggamī vīro,",
"tha-ap424:15.4": "haṃsarājāva ambare.",
"tha-ap424:16.1": "Yaṃ yaṃ yonupapajjāmi,",
"tha-ap424:16.2": "devattaṃ atha mānusaṃ;",
"tha-ap424:16.3": "Bhoge me ūnatā natthi,",
"tha-ap424:16.4": "ekadussassidaṃ phalaṃ.",
"tha-ap424:17.1": "Paduddhāre paduddhāre,",
"tha-ap424:17.2": "dussaṃ nibbattate mamaṃ;",
"tha-ap424:17.3": "Heṭṭhā dussamhi tiṭṭhāmi,",
"tha-ap424:17.4": "uparicchadanaṃ mama.",
"tha-ap424:18.1": "Cakkavāḷaṃ upādāya,",
"tha-ap424:18.2": "sakānanaṃ sapabbataṃ;",
"tha-ap424:18.3": "Icchamāno cahaṃ ajja,",
"tha-ap424:18.4": "dussehacchādayeyya taṃ.",
"tha-ap424:19.1": "Teneva ekadussena,",
"tha-ap424:19.2": "saṃsaranto bhavābhave;",
"tha-ap424:19.3": "Suvaṇṇavaṇṇo hutvāna,",
"tha-ap424:19.4": "saṃsarāmi bhavābhave.",
"tha-ap424:20.1": "Vipākaṃ ekadussassa,",
"tha-ap424:20.2": "nājjhagaṃ katthacikkhayaṃ;",
"tha-ap424:20.3": "Ayaṃ me antimā jāti,",
"tha-ap424:20.4": "vipaccati idhāpi me.",
"tha-ap424:21.1": "Satasahassito kappe,",
"tha-ap424:21.2": "yaṃ dussamadadiṃ tadā;",
"tha-ap424:21.3": "Duggatiṃ nābhijānāmi,",
"tha-ap424:21.4": "ekadussassidaṃ phalaṃ.",
"tha-ap424:22.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap424:22.4": "viharāmi anāsavo.",
"tha-ap424:23.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap424:23.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap424:24.1": "Paṭisambhidā catasso, … pe …",
"tha-ap424:24.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap424:25.1": "Itthaṃ sudaṃ āyasmā ekadussadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap424:26.1": "Ekadussadāyakattherassāpadānaṃ dutiyaṃ."
}