{
  "tha-ap254:0.1": "Therāpadāna ",
  "tha-ap254:0.2": "Thomakavagga ",
  "tha-ap254:0.3": "2. Ekāsanadāyakattheraapadāna ",
  "tha-ap254:1.1": "“Vijahitvā devavaṇṇaṁ, ",
  "tha-ap254:1.2": "sabhariyo idhāgamiṁ; ",
  "tha-ap254:1.3": "Adhikāraṁ kattukāmo, ",
  "tha-ap254:1.4": "buddhaseṭṭhassa sāsane. ",
  "tha-ap254:2.1": "Devalo nāma nāmena, ",
  "tha-ap254:2.2": "padumuttarasāvako; ",
  "tha-ap254:2.3": "Tassa bhikkhā mayā dinnā, ",
  "tha-ap254:2.4": "vippasannena cetasā. ",
  "tha-ap254:3.1": "Satasahassito kappe, ",
  "tha-ap254:3.2": "yaṁ kammamakariṁ tadā; ",
  "tha-ap254:3.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap254:3.4": "piṇḍapātassidaṁ phalaṁ. ",
  "tha-ap254:4.1": "Paṭisambhidā catasso, ",
  "tha-ap254:4.2": "…pe… ",
  "tha-ap254:4.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap254:5.1": "Itthaṁ sudaṁ āyasmā ekāsanadāyako thero imā gāthāyo abhāsitthāti. ",
  "tha-ap254:6.1": "Ekāsanadāyakattherassāpadānaṁ dutiyaṁ. "
}