{
"tha-ap446:1.1": "Therāpadāna",
"tha-ap446:2.1": "Vibhītakavagga",
"tha-ap446:3.1": "4 Bhallātadāyakattheraapadāna",
"tha-ap446:4.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
"tha-ap446:4.2": "Dvattiṃsavaralakkhaṇaṃ;",
"tha-ap446:4.3": "Vipinaggena gacchantaṃ,",
"tha-ap446:4.4": "Sālarājaṃva phullitaṃ.",
"tha-ap446:5.1": "Tiṇattharaṃ paññāpetvā,",
"tha-ap446:5.2": "buddhaseṭṭhaṃ ayācahaṃ;",
"tha-ap446:5.3": "‘Anukampatu maṃ buddho,",
"tha-ap446:5.4": "bhikkhaṃ icchāmi dātave’.",
"tha-ap446:6.1": "Anukampako kāruṇiko,",
"tha-ap446:6.2": "atthadassī mahāyaso;",
"tha-ap446:6.3": "Mama saṅkappamaññāya,",
"tha-ap446:6.4": "orūhi mama assame.",
"tha-ap446:7.1": "Orohitvāna sambuddho,",
"tha-ap446:7.2": "nisīdi paṇṇasanthare;",
"tha-ap446:7.3": "Bhallātakaṃ gahetvāna,",
"tha-ap446:7.4": "buddhaseṭṭhassadāsahaṃ.",
"tha-ap446:8.1": "Mama nijjhāyamānassa,",
"tha-ap446:8.2": "paribhuñji tadā jino;",
"tha-ap446:8.3": "Tattha cittaṃ pasādetvā,",
"tha-ap446:8.4": "abhivandiṃ tadā jinaṃ.",
"tha-ap446:9.1": "Aṭṭhārase kappasate,",
"tha-ap446:9.2": "yaṃ phalamadadiṃ tadā;",
"tha-ap446:9.3": "Duggatiṃ nābhijānāmi,",
"tha-ap446:9.4": "phaladānassidaṃ phalaṃ.",
"tha-ap446:10.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap446:10.4": "viharāmi anāsavo.",
"tha-ap446:11.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap446:11.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap446:12.1": "Paṭisambhidā catasso, … pe …",
"tha-ap446:12.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap446:13.1": "Itthaṃ sudaṃ āyasmā bhallātadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap446:14.1": "Bhallātadāyakattherassāpadānaṃ catutthaṃ."
}