{
"tha-ap11:1.1": "Therāpadāna",
"tha-ap11:2.1": "Buddhavagga",
"tha-ap11:3.1": "11. Khadiravaniyarevatattheraapadāna",
"tha-ap11:4.1": "“Gaṅgā bhāgīrathī nāma,",
"tha-ap11:4.2": "himavantā pabhāvitā;",
"tha-ap11:4.3": "Kutitthe nāviko āsiṃ,",
"tha-ap11:4.4": "orime ca tariṃ ahaṃ.",
"tha-ap11:5.1": "Padumuttaro nāyako,",
"tha-ap11:5.2": "sambuddho dvipaduttamo;",
"tha-ap11:5.3": "Vasī satasahassehi,",
"tha-ap11:5.4": "gaṅgātīramupāgato.",
"tha-ap11:6.1": "Bahū nāvā samānetvā,",
"tha-ap11:6.2": "vaḍḍhakīhi susaṅkhataṃ;",
"tha-ap11:6.3": "Nāvāya chadanaṃ katvā,",
"tha-ap11:6.4": "paṭimāniṃ narāsabhaṃ.",
"tha-ap11:7.1": "Āgantvāna ca sambuddho,",
"tha-ap11:7.2": "ārūhi tañca nāvakaṃ;",
"tha-ap11:7.3": "Vārimajjhe ṭhito satthā,",
"tha-ap11:7.4": "imā gāthā abhāsatha.",
"tha-ap11:8.1": "‘Yo so tāresi sambuddhaṃ,",
"tha-ap11:8.2": "saṃghañcāpi anāsavaṃ;",
"tha-ap11:8.3": "Tena cittappasādena,",
"tha-ap11:8.4": "devaloke ramissati.",
"tha-ap11:9.1": "Nibbattissati te byamhaṃ,",
"tha-ap11:9.2": "sukataṃ nāvasaṇṭhitaṃ;",
"tha-ap11:9.3": "Ākāse pupphachadanaṃ,",
"tha-ap11:9.4": "dhārayissati sabbadā.",
"tha-ap11:10.1": "Aṭṭhapaññāsakappamhi,",
"tha-ap11:10.2": "tārako nāma khattiyo;",
"tha-ap11:10.3": "Cāturanto vijitāvī,",
"tha-ap11:10.4": "cakkavattī bhavissati.",
"tha-ap11:11.1": "Sattapaññāsakappamhi,",
"tha-ap11:11.2": "cammako nāma khattiyo;",
"tha-ap11:11.3": "Uggacchantova sūriyo,",
"tha-ap11:11.4": "jotissati mahabbalo.",
"tha-ap11:12.1": "Kappasatasahassamhi,",
"tha-ap11:12.2": "okkākakulasambhavo;",
"tha-ap11:12.3": "Gotamo nāma gottena,",
"tha-ap11:12.4": "satthā loke bhavissati.",
"tha-ap11:13.1": "Tidasā so cavitvāna,",
"tha-ap11:13.2": "manussattaṃ gamissati;",
"tha-ap11:13.3": "Revato nāma nāmena,",
"tha-ap11:13.4": "brahmabandhu bhavissati.",
"tha-ap11:14.1": "Agārā nikkhamitvāna,",
"tha-ap11:14.2": "sukkamūlena codito;",
"tha-ap11:14.3": "Gotamassa bhagavato,",
"tha-ap11:14.4": "sāsane pabbajissati.",
"tha-ap11:15.1": "So pacchā pabbajitvāna,",
"tha-ap11:15.2": "yuttayogo vipassako;",
"tha-ap11:15.3": "Sabbāsave pariññāya,",
"tha-ap11:15.4": "nibbāyissatināsavo’.",
"tha-ap11:16.1": "Vīriyaṃ me dhuradhorayhaṃ,",
"tha-ap11:16.2": "Yogakkhemādhivāhanaṃ;",
"tha-ap11:16.3": "Dhāremi antimaṃ dehaṃ,",
"tha-ap11:16.4": "Sammāsambuddhasāsane.",
"tha-ap11:17.1": "Satasahasse kataṃ kammaṃ,",
"tha-ap11:17.2": "phalaṃ dassesi me idha;",
"tha-ap11:17.3": "Sumutto saravegova,",
"tha-ap11:17.4": "kilese jhāpayī mama.",
"tha-ap11:18.1": "Tato maṃ vananirataṃ,",
"tha-ap11:18.2": "disvā lokantagū muni;",
"tha-ap11:18.3": "Vanavāsibhikkhūnaggaṃ,",
"tha-ap11:18.4": "paññapesi mahāmati.",
"tha-ap11:19.1": "Paṭisambhidā catasso,",
"tha-ap11:19.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap11:19.3": "Chaḷabhiññā sacchikatā,",
"tha-ap11:19.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap11:20.1": "Itthaṃ sudaṃ āyasmā khadiravaniyo revato thero imā gāthāyo abhāsitthāti.",
"tha-ap11:21.1": "Khadiravaniyarevatattherassāpadānaṃ navamaṃ."
}