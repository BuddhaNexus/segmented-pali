{
"tha-ap16:1.1": "Therāpadāna",
"tha-ap16:2.1": "Sīhāsaniyavagga",
"tha-ap16:3.1": "4 Cūḷapanthakattheraapadāna",
"tha-ap16:4.1": "“Padumuttaro nāma jino,",
"tha-ap16:4.2": "āhutīnaṃ paṭiggaho;",
"tha-ap16:4.3": "Gaṇamhā vūpakaṭṭho so,",
"tha-ap16:4.4": "himavante vasī tadā.",
"tha-ap16:5.1": "Ahampi himavantamhi,",
"tha-ap16:5.2": "vasāmi assame tadā;",
"tha-ap16:5.3": "Acirāgataṃ mahāvīraṃ,",
"tha-ap16:5.4": "upesiṃ lokanāyakaṃ.",
"tha-ap16:6.1": "Pupphacchattaṃ gahetvāna,",
"tha-ap16:6.2": "upagacchiṃ narāsabhaṃ;",
"tha-ap16:6.3": "Samādhiṃ samāpajjantaṃ,",
"tha-ap16:6.4": "antarāyamakāsahaṃ.",
"tha-ap16:7.1": "Ubho hatthehi paggayha,",
"tha-ap16:7.2": "pupphacchattaṃ adāsahaṃ;",
"tha-ap16:7.3": "Paṭiggahesi bhagavā,",
"tha-ap16:7.4": "padumuttaro mahāmuni.",
"tha-ap16:8.1": "Sabbe devā attamanā,",
"tha-ap16:8.2": "himavantaṃ upenti te;",
"tha-ap16:8.3": "Sādhukāraṃ pavattesuṃ,",
"tha-ap16:8.4": "anumodissati cakkhumā.",
"tha-ap16:9.1": "Idaṃ vatvāna te devā,",
"tha-ap16:9.2": "upagacchuṃ naruttamaṃ;",
"tha-ap16:9.3": "Ākāse dhārayantassa,",
"tha-ap16:9.4": "padumacchattamuttamaṃ.",
"tha-ap16:10.1": "Satapattachattaṃ paggayha,",
"tha-ap16:10.2": "adāsi tāpaso mama;",
"tha-ap16:10.3": "‘Tamahaṃ kittayissāmi,",
"tha-ap16:10.4": "suṇātha mama bhāsato.",
"tha-ap16:11.1": "Pañcavīsatikappāni,",
"tha-ap16:11.2": "devarajjaṃ karissati;",
"tha-ap16:11.3": "Catuttiṃsatikkhattuñca,",
"tha-ap16:11.4": "cakkavattī bhavissati.",
"tha-ap16:12.1": "Yaṃ yaṃ yoniṃ saṃsarati,",
"tha-ap16:12.2": "devattaṃ atha mānusaṃ;",
"tha-ap16:12.3": "Abbhokāse patiṭṭhantaṃ,",
"tha-ap16:12.4": "padumaṃ dhārayissati.",
"tha-ap16:13.1": "Kappasatasahassamhi,",
"tha-ap16:13.2": "okkākakulasambhavo;",
"tha-ap16:13.3": "Gotamo nāma gottena,",
"tha-ap16:13.4": "satthā loke bhavissati.",
"tha-ap16:14.1": "Pakāsite pāvacane,",
"tha-ap16:14.2": "manussattaṃ labhissati;",
"tha-ap16:14.3": "Manomayamhi kāyamhi,",
"tha-ap16:14.4": "uttamo so bhavissati.",
"tha-ap16:15.1": "Dve bhātaro bhavissanti,",
"tha-ap16:15.2": "ubhopi panthakavhayā;",
"tha-ap16:15.3": "Anubhotvā uttamatthaṃ,",
"tha-ap16:15.4": "jotayissanti sāsanaṃ’.",
"tha-ap16:16.1": "Sohaṃ aṭṭhārasavasso,",
"tha-ap16:16.2": "pabbajiṃ anagāriyaṃ;",
"tha-ap16:16.3": "Visesāhaṃ na vindāmi,",
"tha-ap16:16.4": "sakyaputtassa sāsane.",
"tha-ap16:17.1": "Dandhā mayhaṃ gatī āsi,",
"tha-ap16:17.2": "paribhūto pure ahuṃ;",
"tha-ap16:17.3": "Bhātā ca maṃ paṇāmesi,",
"tha-ap16:17.4": "gaccha dāni sakaṃ gharaṃ.",
"tha-ap16:18.1": "Sohaṃ paṇāmito santo,",
"tha-ap16:18.2": "saṃghārāmassa koṭṭhake;",
"tha-ap16:18.3": "Dummano tattha aṭṭhāsiṃ,",
"tha-ap16:18.4": "sāmaññasmiṃ apekkhavā.",
"tha-ap16:19.1": "Bhagavā tattha āgacchi,",
"tha-ap16:19.2": "sīsaṃ mayhaṃ parāmasi;",
"tha-ap16:19.3": "Bāhāya maṃ gahetvāna,",
"tha-ap16:19.4": "saṃghārāmaṃ pavesayi.",
"tha-ap16:20.1": "Anukampāya me satthā,",
"tha-ap16:20.2": "adāsi pādapuñchaniṃ;",
"tha-ap16:20.3": "Evaṃ suddhaṃ adhiṭṭhehi,",
"tha-ap16:20.4": "ekamantamadhiṭṭhahaṃ.",
"tha-ap16:21.1": "Hatthehi tamahaṃ gayha,",
"tha-ap16:21.2": "sariṃ kokanadaṃ ahaṃ;",
"tha-ap16:21.3": "Tattha cittaṃ vimucci me,",
"tha-ap16:21.4": "arahattaṃ apāpuṇiṃ.",
"tha-ap16:22.1": "Manomayesu kāyesu,",
"tha-ap16:22.2": "sabbattha pāramiṃ gato;",
"tha-ap16:22.3": "Sabbāsave pariññāya,",
"tha-ap16:22.4": "viharāmi anāsavo.",
"tha-ap16:23.1": "Paṭisambhidā catasso,",
"tha-ap16:23.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap16:23.3": "Chaḷabhiññā sacchikatā,",
"tha-ap16:23.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap16:24.1": "Itthaṃ sudaṃ āyasmā cūḷapanthako thero imā gāthāyo abhāsitthāti.",
"tha-ap16:25.1": "Cūḷapanthakattherassāpadānaṃ catutthaṃ."
}