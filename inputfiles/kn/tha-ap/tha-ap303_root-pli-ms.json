{
"tha-ap303:1.1": "Therāpadāna",
"tha-ap303:2.1": "Padumakesaravagga",
"tha-ap303:3.1": "1. Padumakesariyattheraapadāna",
"tha-ap303:4.1": "“Isisaṃghe ahaṃ pubbe,",
"tha-ap303:4.2": "āsiṃ mātaṅgavāraṇo;",
"tha-ap303:4.3": "Mahesīnaṃ pasādena,",
"tha-ap303:4.4": "padmakesaramokiriṃ.",
"tha-ap303:5.1": "Paccekajinaseṭṭhesu,",
"tha-ap303:5.2": "dhutarāgesu tādisu;",
"tha-ap303:5.3": "Tesu cittaṃ pasādetvā,",
"tha-ap303:5.4": "kappaṃ saggamhi modahaṃ.",
"tha-ap303:6.1": "Ekanavutito kappe,",
"tha-ap303:6.2": "kesaraṃ okiriṃ tadā;",
"tha-ap303:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap303:6.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap303:7.1": "Paṭisambhidā catasso,",
"tha-ap303:7.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap303:7.3": "Chaḷabhiññā sacchikatā,",
"tha-ap303:7.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap303:8.1": "Itthaṃ sudaṃ āyasmā padumakesariyo thero imā gāthāyo abhāsitthāti.",
"tha-ap303:9.1": "Padumakesariyattherassāpadānaṃ paṭhamaṃ."
}