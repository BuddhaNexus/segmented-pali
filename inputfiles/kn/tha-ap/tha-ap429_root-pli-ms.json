{
"tha-ap429:1.1": "Therāpadāna",
"tha-ap429:2.1": "Sakiṃsammajjakavagga",
"tha-ap429:3.1": "7 Ekadhammassavaniyattheraapadāna",
"tha-ap429:4.1": "“Padumuttaro nāma jino,",
"tha-ap429:4.2": "sabbadhammāna pāragū;",
"tha-ap429:4.3": "Catusaccaṃ pakāsento,",
"tha-ap429:4.4": "santāresi bahuṃ janaṃ.",
"tha-ap429:5.1": "Ahaṃ tena samayena,",
"tha-ap429:5.2": "jaṭilo uggatāpano;",
"tha-ap429:5.3": "Dhunanto vākacīrāni,",
"tha-ap429:5.4": "gacchāmi ambare tadā.",
"tha-ap429:6.1": "Buddhaseṭṭhassa upari,",
"tha-ap429:6.2": "gantuṃ na visahāmahaṃ;",
"tha-ap429:6.3": "Pakkhīva selamāsajja,",
"tha-ap429:6.4": "gamanaṃ na labhāmahaṃ.",
"tha-ap429:7.1": "Udake vokkamitvāna,",
"tha-ap429:7.2": "evaṃ gacchāmi ambare;",
"tha-ap429:7.3": "Na me idaṃ bhūtapubbaṃ,",
"tha-ap429:7.4": "iriyāpathavikopanaṃ.",
"tha-ap429:8.1": "Handa metaṃ gavesissaṃ,",
"tha-ap429:8.2": "appevatthaṃ labheyyahaṃ;",
"tha-ap429:8.3": "Orohanto antalikkhā,",
"tha-ap429:8.4": "saddamassosi satthuno.",
"tha-ap429:9.1": "Sarena rajanīyena,",
"tha-ap429:9.2": "savanīyena vaggunā;",
"tha-ap429:9.3": "Aniccataṃ kathentassa,",
"tha-ap429:9.4": "taññeva uggahiṃ tadā;",
"tha-ap429:9.5": "Aniccasaññamuggayha,",
"tha-ap429:9.6": "agamāsiṃ mamassamaṃ.",
"tha-ap429:10.1": "Yāvatāyuṃ vasitvāna,",
"tha-ap429:10.2": "tattha kālaṅkato ahaṃ;",
"tha-ap429:10.3": "Carime vattamānamhi,",
"tha-ap429:10.4": "saddhammassavanaṃ sariṃ.",
"tha-ap429:11.1": "Tena kammena sukatena,",
"tha-ap429:11.2": "cetanāpaṇidhīhi ca;",
"tha-ap429:11.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap429:11.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap429:12.1": "Tiṃsakappasahassāni,",
"tha-ap429:12.2": "devaloke ramiṃ ahaṃ;",
"tha-ap429:12.3": "Ekapaññāsakkhattuñca,",
"tha-ap429:12.4": "devarajjamakārayiṃ.",
"tha-ap429:13.1": "Ekavīsatikkhattuñca,",
"tha-ap429:13.2": "cakkavattī ahosahaṃ;",
"tha-ap429:13.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap429:13.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap429:14.1": "Anubhomi sakaṃ puññaṃ,",
"tha-ap429:14.2": "sukhitohaṃ bhavābhave;",
"tha-ap429:14.3": "Anussarāmi taṃ saññaṃ,",
"tha-ap429:14.4": "saṃsaranto bhavābhave;",
"tha-ap429:14.5": "Na koṭiṃ paṭivijjhāmi,",
"tha-ap429:14.6": "nibbānaṃ accutaṃ padaṃ.",
"tha-ap429:15.1": "Pitugehe nisīditvā,",
"tha-ap429:15.2": "samaṇo bhāvitindriyo;",
"tha-ap429:15.3": "Kathaṃsa paridīpento,",
"tha-ap429:15.4": "aniccatamudāhari.",
"tha-ap429:16.1": "‘Aniccā vata saṅkhārā,",
"tha-ap429:16.2": "uppādavayadhammino;",
"tha-ap429:16.3": "Uppajjitvā nirujjhanti,",
"tha-ap429:16.4": "tesaṃ vūpasamo sukho’.",
"tha-ap429:17.1": "Saha gāthaṃ suṇitvāna,",
"tha-ap429:17.2": "pubbasaññamanussariṃ;",
"tha-ap429:17.3": "Ekāsane nisīditvā,",
"tha-ap429:17.4": "arahattamapāpuṇiṃ.",
"tha-ap429:18.1": "Jātiyā sattavassena,",
"tha-ap429:18.2": "arahattamapāpuṇiṃ;",
"tha-ap429:18.3": "Upasampādayī buddho,",
"tha-ap429:18.4": "dhammassavanassidaṃ phalaṃ.",
"tha-ap429:19.1": "Satasahassito kappe,",
"tha-ap429:19.2": "yaṃ dhammamasuṇiṃ tadā;",
"tha-ap429:19.3": "Duggatiṃ nābhijānāmi,",
"tha-ap429:19.4": "dhammassavanassidaṃ phalaṃ.",
"tha-ap429:20.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap429:20.4": "viharāmi anāsavo.",
"tha-ap429:21.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap429:21.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap429:22.1": "Paṭisambhidā catasso, … pe …",
"tha-ap429:22.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap429:23.1": "Itthaṃ sudaṃ āyasmā ekadhammassavaniyo thero imā gāthāyo abhāsitthāti.",
"tha-ap429:24.1": "Ekadhammassavaniyattherassāpadānaṃ sattamaṃ."
}