{
"tha-ap532:1.1": "Therāpadāna",
"tha-ap532:2.1": "Tiṇadāyakavagga",
"tha-ap532:3.1": "10. Sugandhattheraapadāna",
"tha-ap532:4.1": "“Imamhi bhaddake kappe,",
"tha-ap532:4.2": "brahmabandhu mahāyaso;",
"tha-ap532:4.3": "Kassapo nāma gottena,",
"tha-ap532:4.4": "uppajji vadataṃ varo.",
"tha-ap532:5.1": "Anubyañjanasampanno,",
"tha-ap532:5.2": "bāttiṃsavaralakkhaṇo;",
"tha-ap532:5.3": "Byāmappabhāparivuto,",
"tha-ap532:5.4": "raṃsijālasamotthaṭo.",
"tha-ap532:6.1": "Assāsetā yathā cando,",
"tha-ap532:6.2": "sūriyova pabhaṅkaro;",
"tha-ap532:6.3": "Nibbāpetā yathā megho,",
"tha-ap532:6.4": "sāgarova guṇākaro.",
"tha-ap532:7.1": "Dharaṇīriva sīlena,",
"tha-ap532:7.2": "himavāva samādhinā;",
"tha-ap532:7.3": "Ākāso viya paññāya,",
"tha-ap532:7.4": "asaṅgo anilo yathā.",
"tha-ap532:8.1": "Sa kadāci mahāvīro,",
"tha-ap532:8.2": "parisāsu visārado;",
"tha-ap532:8.3": "Saccāni sampakāseti,",
"tha-ap532:8.4": "uddharanto mahājanaṃ.",
"tha-ap532:9.1": "Tadā hi bārāṇasiyaṃ,",
"tha-ap532:9.2": "seṭṭhiputto mahāyaso;",
"tha-ap532:9.3": "Āsahaṃ dhanadhaññassa,",
"tha-ap532:9.4": "pahūtassa bahū tadā.",
"tha-ap532:10.1": "Jaṅghāvihāraṃ vicaraṃ,",
"tha-ap532:10.2": "migadāyamupeccahaṃ;",
"tha-ap532:10.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap532:10.4": "desentaṃ amataṃ padaṃ.",
"tha-ap532:11.1": "Visaṭṭhakantavacanaṃ,",
"tha-ap532:11.2": "karavīkasamassaraṃ;",
"tha-ap532:11.3": "Haṃsarutehi nigghosaṃ,",
"tha-ap532:11.4": "viññāpentaṃ mahājanaṃ.",
"tha-ap532:12.1": "Disvā devātidevaṃ taṃ,",
"tha-ap532:12.2": "sutvāva madhuraṃ giraṃ;",
"tha-ap532:12.3": "Pahāyanappake bhoge,",
"tha-ap532:12.4": "pabbajiṃ anagāriyaṃ.",
"tha-ap532:13.1": "Evaṃ pabbajito cāhaṃ,",
"tha-ap532:13.2": "na cirena bahussuto;",
"tha-ap532:13.3": "Ahosiṃ dhammakathiko,",
"tha-ap532:13.4": "vicittapaṭibhānavā.",
"tha-ap532:14.1": "Mahāparisamajjhehaṃ,",
"tha-ap532:14.2": "haṭṭhacitto punappunaṃ;",
"tha-ap532:14.3": "Vaṇṇayiṃ hemavaṇṇassa,",
"tha-ap532:14.4": "vaṇṇaṃ vaṇṇavisārado.",
"tha-ap532:15.1": "‘Esa khīṇāsavo buddho,",
"tha-ap532:15.2": "anīgho chinnasaṃsayo;",
"tha-ap532:15.3": "Sabbakammakkhayaṃ patto,",
"tha-ap532:15.4": "vimuttopadhisaṅkhaye.",
"tha-ap532:16.1": "Esa so bhagavā buddho,",
"tha-ap532:16.2": "esa sīho anuttaro;",
"tha-ap532:16.3": "Sadevakassa lokassa,",
"tha-ap532:16.4": "brahmacakkappavattako.",
"tha-ap532:17.1": "Danto dametā santo ca,",
"tha-ap532:17.2": "sametā nibbuto isi;",
"tha-ap532:17.3": "Nibbāpetā ca assattho,",
"tha-ap532:17.4": "assāsetā mahājanaṃ.",
"tha-ap532:18.1": "Vīro sūro ca vikkanto,",
"tha-ap532:18.2": "pañño kāruṇiko vasī;",
"tha-ap532:18.3": "Vijitāvī ca sa jino,",
"tha-ap532:18.4": "appagabbo anālayo.",
"tha-ap532:19.1": "Aneñjo acalo dhīmā,",
"tha-ap532:19.2": "amoho asamo muni;",
"tha-ap532:19.3": "Dhorayho usabho nāgo,",
"tha-ap532:19.4": "sīho sakko garūsupi.",
"tha-ap532:20.1": "Virāgo vimalo brahmā,",
"tha-ap532:20.2": "vādī sūro raṇañjaho;",
"tha-ap532:20.3": "Akhilo ca visallo ca,",
"tha-ap532:20.4": "asamo saṃyato suci.",
"tha-ap532:21.1": "Brāhmaṇo samaṇo nātho,",
"tha-ap532:21.2": "bhisakko sallakattako;",
"tha-ap532:21.3": "Yodho buddho sutāsuto,",
"tha-ap532:21.4": "acalo mudito sito.",
"tha-ap532:22.1": "Dhātā dhatā ca santi ca,",
"tha-ap532:22.2": "kattā netā pakāsitā;",
"tha-ap532:22.3": "Sampahaṃsitā bhettā ca,",
"tha-ap532:22.4": "chettā sotā pasaṃsitā.",
"tha-ap532:23.1": "Akhilo ca visallo ca,",
"tha-ap532:23.2": "anīgho akathaṃkathī;",
"tha-ap532:23.3": "Anejo virajo kattā,",
"tha-ap532:23.4": "gandhā vattā pasaṃsitā.",
"tha-ap532:24.1": "Tāretā atthakāretā,",
"tha-ap532:24.2": "kāretā sampadāritā;",
"tha-ap532:24.3": "Pāpetā sahitā kantā,",
"tha-ap532:24.4": "hantā ātāpī tāpaso.",
"tha-ap532:25.1": "Samacitto samasamo,",
"tha-ap532:25.2": "asahāyo dayālayo;",
"tha-ap532:25.3": "Accherasatto akuho,",
"tha-ap532:25.4": "katāvī isisattamo.",
"tha-ap532:26.1": "Nittiṇṇakaṅkho nimmāno,",
"tha-ap532:26.2": "appameyyo anūpamo;",
"tha-ap532:26.3": "Sabbavākyapathātīto,",
"tha-ap532:26.4": "saccaneyyantagū jino.",
"tha-ap532:27.1": "Sattasāravare tasmiṃ,",
"tha-ap532:27.2": "Pasādo amatāvaho;",
"tha-ap532:27.3": "Tasmā buddhe ca dhamme ca,",
"tha-ap532:27.4": "Saṃghe saddhā mahatthikā’.",
"tha-ap532:28.1": "Guṇehi evamādīhi,",
"tha-ap532:28.2": "tilokasaraṇuttamaṃ;",
"tha-ap532:28.3": "Vaṇṇento parisāmajjhe,",
"tha-ap532:28.4": "akaṃ dhammakathaṃ ahaṃ.",
"tha-ap532:29.1": "Tato cutāhaṃ tusite,",
"tha-ap532:29.2": "anubhotvā mahāsukhaṃ;",
"tha-ap532:29.3": "Tato cuto manussesu,",
"tha-ap532:29.4": "jāto homi sugandhiko.",
"tha-ap532:30.1": "Nissāso mukhagandho ca,",
"tha-ap532:30.2": "dehagandho tatheva me;",
"tha-ap532:30.3": "Sedagandho ca satataṃ,",
"tha-ap532:30.4": "sabbagandhova hoti me.",
"tha-ap532:31.1": "Mukhagandho sadā mayhaṃ,",
"tha-ap532:31.2": "padumuppalacampako;",
"tha-ap532:31.3": "Parisanto sadā vāti,",
"tha-ap532:31.4": "sarīro ca tatheva me.",
"tha-ap532:32.1": "Guṇatthavassa sabbantaṃ,",
"tha-ap532:32.2": "Phalaṃ tu paramabbhutaṃ;",
"tha-ap532:32.3": "Ekaggamanasā sabbe,",
"tha-ap532:32.4": "Vaṇṇayissaṃ suṇātha me.",
"tha-ap532:33.1": "Guṇaṃ buddhassa vatvāna,",
"tha-ap532:33.2": "hitāya ca na sadisaṃ;",
"tha-ap532:33.3": "Sukhito homi sabbattha,",
"tha-ap532:33.4": "saṃgho vīrasamāyuto.",
"tha-ap532:34.1": "Yasassī sukhito kanto,",
"tha-ap532:34.2": "jutimā piyadassano;",
"tha-ap532:34.3": "Vattā aparibhūto ca,",
"tha-ap532:34.4": "niddoso paññavā tathā.",
"tha-ap532:35.1": "Khīṇe āyusi nibbānaṃ,",
"tha-ap532:35.2": "sulabhaṃ buddhabhattino;",
"tha-ap532:35.3": "Tesaṃ hetuṃ pavakkhāmi,",
"tha-ap532:35.4": "taṃ suṇātha yathātathaṃ.",
"tha-ap532:36.1": "Santaṃ yasaṃ bhagavato,",
"tha-ap532:36.2": "vidhinā abhivādayaṃ;",
"tha-ap532:36.3": "Tattha tatthūpapannopi,",
"tha-ap532:36.4": "yasassī tena homahaṃ.",
"tha-ap532:37.1": "Dukkhassantakaraṃ buddhaṃ,",
"tha-ap532:37.2": "dhammaṃ santamasaṅkhataṃ;",
"tha-ap532:37.3": "Vaṇṇayaṃ sukhado āsiṃ,",
"tha-ap532:37.4": "sattānaṃ sukhito tato.",
"tha-ap532:38.1": "Guṇaṃ vadanto buddhassa,",
"tha-ap532:38.2": "buddhapītisamāyuto;",
"tha-ap532:38.3": "Sakantiṃ parakantiñca,",
"tha-ap532:38.4": "janayiṃ tena kantimā.",
"tha-ap532:39.1": "Jino te titthikākiṇṇe,",
"tha-ap532:39.2": "abhibhuyya kutitthiye;",
"tha-ap532:39.3": "Guṇaṃ vadanto jotesiṃ,",
"tha-ap532:39.4": "nāyakaṃ jutimā tato.",
"tha-ap532:40.1": "Piyakārī janassāpi,",
"tha-ap532:40.2": "sambuddhassa guṇaṃ vadaṃ;",
"tha-ap532:40.3": "Saradova sasaṅkohaṃ,",
"tha-ap532:40.4": "tenāsiṃ piyadassano.",
"tha-ap532:41.1": "Yathāsattivasenāhaṃ,",
"tha-ap532:41.2": "sabbavācāhi santhaviṃ;",
"tha-ap532:41.3": "Sugataṃ tena vāgiso,",
"tha-ap532:41.4": "vicittapaṭibhānavā.",
"tha-ap532:42.1": "Ye bālā vimatiṃ pattā,",
"tha-ap532:42.2": "paribhonti mahāmuniṃ;",
"tha-ap532:42.3": "Niggahiṃ te saddhammena,",
"tha-ap532:42.4": "paribhūto na tenahaṃ.",
"tha-ap532:43.1": "Buddhavaṇṇena sattānaṃ,",
"tha-ap532:43.2": "kilese apanesahaṃ;",
"tha-ap532:43.3": "Nikkilesamano homi,",
"tha-ap532:43.4": "tassa kammassa vāhasā.",
"tha-ap532:44.1": "Sotūnaṃ vuddhimajaniṃ,",
"tha-ap532:44.2": "buddhānussatidesako;",
"tha-ap532:44.3": "Tenāhamāsiṃ sappañño,",
"tha-ap532:44.4": "nipuṇatthavipassako.",
"tha-ap532:45.1": "Sabbāsavaparikkhīṇo,",
"tha-ap532:45.2": "tiṇṇasaṃsārasāgaro;",
"tha-ap532:45.3": "Sikhīva anupādāno,",
"tha-ap532:45.4": "pāpuṇissāmi nibbutiṃ.",
"tha-ap532:46.1": "Imasmiṃyeva kappasmiṃ,",
"tha-ap532:46.2": "yamahaṃ santhaviṃ jinaṃ;",
"tha-ap532:46.3": "Duggatiṃ nābhijānāmi,",
"tha-ap532:46.4": "buddhavaṇṇassidaṃ phalaṃ.",
"tha-ap532:47.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap532:47.4": "viharāmi anāsavo.",
"tha-ap532:48.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap532:48.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap532:49.1": "Paṭisambhidā catasso, … pe …",
"tha-ap532:49.4": "kataṃ buddhassa sāsanaṃ”. #5575",
"tha-ap532:50.1": "Itthaṃ sudaṃ āyasmā sugandho thero imā gāthāyo abhāsitthāti.",
"tha-ap532:51.1": "Sugandhattherassāpadānaṃ dasamaṃ.",
"tha-ap532:52.1": "Tiṇadāyakavaggo tepaññāsamo.",
"tha-ap532:53.1": "Tassuddānaṃ",
"tha-ap532:54.1": "Tiṇado mañcado ceva,",
"tha-ap532:54.2": "saraṇabbhañjanappado;",
"tha-ap532:54.3": "Supaṭo daṇḍadāyī ca,",
"tha-ap532:54.4": "nelapūjī tatheva ca.",
"tha-ap532:55.1": "Bodhisammajjako maṇḍo,",
"tha-ap532:55.2": "sugandho dasamoti ca;",
"tha-ap532:55.3": "Gāthāsataṃ satevīsaṃ,",
"tha-ap532:55.4": "gaṇitañcettha sabbaso."
}