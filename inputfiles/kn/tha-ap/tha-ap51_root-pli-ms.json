{
"tha-ap51:1.1": "Therāpadāna",
"tha-ap51:2.1": "Upālivagga",
"tha-ap51:3.1": "9. Subhaddattheraapadāna",
"tha-ap51:4.1": "“Padumuttaro lokavidū,",
"tha-ap51:4.2": "āhutīnaṃ paṭiggaho;",
"tha-ap51:4.3": "Janataṃ uddharitvāna,",
"tha-ap51:4.4": "nibbāyati mahāyaso.",
"tha-ap51:5.1": "Nibbāyante ca sambuddhe,",
"tha-ap51:5.2": "dasasahassi kampatha;",
"tha-ap51:5.3": "Janakāyo mahā āsi,",
"tha-ap51:5.4": "devā sannipatuṃ tadā.",
"tha-ap51:6.1": "Candanaṃ pūrayitvāna,",
"tha-ap51:6.2": "tagarāmallikāhi ca;",
"tha-ap51:6.3": "Haṭṭho haṭṭhena cittena,",
"tha-ap51:6.4": "āropayiṃ naruttamaṃ.",
"tha-ap51:7.1": "Mama saṅkappamaññāya,",
"tha-ap51:7.2": "satthā loke anuttaro;",
"tha-ap51:7.3": "Nipannakova sambuddho,",
"tha-ap51:7.4": "imā gāthā abhāsatha.",
"tha-ap51:8.1": "‘Yo me pacchimake kāle,",
"tha-ap51:8.2": "gandhamālena chādayi;",
"tha-ap51:8.3": "Tamahaṃ kittayissāmi,",
"tha-ap51:8.4": "suṇātha mama bhāsato.",
"tha-ap51:9.1": "Ito cuto ayaṃ poso,",
"tha-ap51:9.2": "tusitakāyaṃ gamissati;",
"tha-ap51:9.3": "Tattha rajjaṃ karitvāna,",
"tha-ap51:9.4": "nimmānaṃ so gamissati.",
"tha-ap51:10.1": "Eteneva upāyena,",
"tha-ap51:10.2": "datvā mālaṃ varuttamaṃ;",
"tha-ap51:10.3": "Sakakammābhiraddho so,",
"tha-ap51:10.4": "sampattiṃ anubhossati.",
"tha-ap51:11.1": "Punāpi tusite kāye,",
"tha-ap51:11.2": "nibbattissatiyaṃ naro;",
"tha-ap51:11.3": "Tamhā kāyā cavitvāna,",
"tha-ap51:11.4": "manussattaṃ gamissati.",
"tha-ap51:12.1": "Sakyaputto mahānāgo,",
"tha-ap51:12.2": "aggo loke sadevake;",
"tha-ap51:12.3": "Bodhayitvā bahū satte,",
"tha-ap51:12.4": "nibbāyissati cakkhumā.",
"tha-ap51:13.1": "Tadā sopagato santo,",
"tha-ap51:13.2": "sukkamūlena codito;",
"tha-ap51:13.3": "Upasaṅkamma sambuddhaṃ,",
"tha-ap51:13.4": "pañhaṃ pucchissati tadā.",
"tha-ap51:14.1": "Hāsayitvāna sambuddho,",
"tha-ap51:14.2": "sabbaññū lokanāyako;",
"tha-ap51:14.3": "Puññakammaṃ pariññāya,",
"tha-ap51:14.4": "saccāni vivarissati.",
"tha-ap51:15.1": "Āraddho ca ayaṃ pañho,",
"tha-ap51:15.2": "tuṭṭho ekaggamānaso;",
"tha-ap51:15.3": "Satthāraṃ abhivādetvā,",
"tha-ap51:15.4": "pabbajjaṃ yācayissati.",
"tha-ap51:16.1": "Pasannamānasaṃ disvā,",
"tha-ap51:16.2": "sakakammena tositaṃ;",
"tha-ap51:16.3": "Pabbājessati so buddho,",
"tha-ap51:16.4": "aggamaggassa kovido.",
"tha-ap51:17.1": "Vāyamitvānayaṃ poso,",
"tha-ap51:17.2": "sammāsambuddhasāsane;",
"tha-ap51:17.3": "Sabbāsave pariññāya,",
"tha-ap51:17.4": "nibbāyissatināsavo’.",
"tha-ap51:18.1": "Pañcamabhāṇavāraṃ.",
"tha-ap51:19.1": "Pubbakammena saṃyutto,",
"tha-ap51:19.2": "ekaggo susamāhito;",
"tha-ap51:19.3": "Buddhassa oraso putto,",
"tha-ap51:19.4": "dhammajomhi sunimmito.",
"tha-ap51:20.1": "Dhammarājaṃ upagamma,",
"tha-ap51:20.2": "apucchiṃ pañhamuttamaṃ;",
"tha-ap51:20.3": "Kathayanto ca me pañhaṃ,",
"tha-ap51:20.4": "dhammasotaṃ upānayi.",
"tha-ap51:21.1": "Tassāhaṃ dhammamaññāya,",
"tha-ap51:21.2": "vihāsiṃ sāsane rato;",
"tha-ap51:21.3": "Sabbāsave pariññāya,",
"tha-ap51:21.4": "viharāmi anāsavo.",
"tha-ap51:22.1": "Satasahassito kappe,",
"tha-ap51:22.2": "jalajuttamanāyako;",
"tha-ap51:22.3": "Nibbāyi anupādāno,",
"tha-ap51:22.4": "dīpova telasaṅkhayā.",
"tha-ap51:23.1": "Sattayojanikaṃ āsi,",
"tha-ap51:23.2": "thūpañca ratanāmayaṃ;",
"tha-ap51:23.3": "Dhajaṃ tattha apūjesiṃ,",
"tha-ap51:23.4": "sabbabhaddaṃ manoramaṃ.",
"tha-ap51:24.1": "Kassapassa ca buddhassa,",
"tha-ap51:24.2": "tisso nāmaggasāvako;",
"tha-ap51:24.3": "Putto me oraso āsi,",
"tha-ap51:24.4": "dāyādo jinasāsane.",
"tha-ap51:25.1": "Tassa hīnena manasā,",
"tha-ap51:25.2": "vācaṃ bhāsiṃ abhaddakaṃ;",
"tha-ap51:25.3": "Tena kammavipākena,",
"tha-ap51:25.4": "pacchā me āsi bhaddakaṃ.",
"tha-ap51:26.1": "Upavattane sālavane,",
"tha-ap51:26.2": "pacchime sayane muni;",
"tha-ap51:26.3": "Pabbājesi mahāvīro,",
"tha-ap51:26.4": "hito kāruṇiko jino.",
"tha-ap51:27.1": "Ajjeva dāni pabbajjā,",
"tha-ap51:27.2": "ajjeva upasampadā;",
"tha-ap51:27.3": "Ajjeva parinibbānaṃ,",
"tha-ap51:27.4": "sammukhā dvipaduttame.",
"tha-ap51:28.1": "Paṭisambhidā catasso, … pe …",
"tha-ap51:28.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap51:29.1": "Itthaṃ sudaṃ āyasmā subhaddo thero imā gāthāyo abhāsitthāti.",
"tha-ap51:30.1": "Subhaddattherassāpadānaṃ navamaṃ."
}