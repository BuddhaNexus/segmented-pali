{
"tha-ap492:1.1": "Therāpadāna",
"tha-ap492:2.1": "Paṃsukūlavagga",
"tha-ap492:3.1": "10. Sālamaṇḍapiyattheraapadāna",
"tha-ap492:4.1": "“Ajjhogāhetvā sālavanaṃ,",
"tha-ap492:4.2": "sukato assamo mama;",
"tha-ap492:4.3": "Sālapupphehi sañchanno,",
"tha-ap492:4.4": "vasāmi vipine tadā.",
"tha-ap492:5.1": "Piyadassī ca bhagavā,",
"tha-ap492:5.2": "sayambhū aggapuggalo;",
"tha-ap492:5.3": "Vivekakāmo sambuddho,",
"tha-ap492:5.4": "sālavanamupāgami.",
"tha-ap492:6.1": "Assamā abhinikkhamma,",
"tha-ap492:6.2": "pavanaṃ agamāsahaṃ;",
"tha-ap492:6.3": "Mūlaphalaṃ gavesanto,",
"tha-ap492:6.4": "āhiṇḍāmi vane tadā.",
"tha-ap492:7.1": "Tatthaddasāsiṃ sambuddhaṃ,",
"tha-ap492:7.2": "piyadassiṃ mahāyasaṃ;",
"tha-ap492:7.3": "Sunisinnaṃ samāpannaṃ,",
"tha-ap492:7.4": "virocantaṃ mahāvane.",
"tha-ap492:8.1": "Catudaṇḍe ṭhapetvāna,",
"tha-ap492:8.2": "buddhassa uparī ahaṃ;",
"tha-ap492:8.3": "Maṇḍapaṃ sukataṃ katvā,",
"tha-ap492:8.4": "sālapupphehi chādayiṃ.",
"tha-ap492:9.1": "Sattāhaṃ dhārayitvāna,",
"tha-ap492:9.2": "maṇḍapaṃ sālachāditaṃ;",
"tha-ap492:9.3": "Tattha cittaṃ pasādetvā,",
"tha-ap492:9.4": "buddhaseṭṭhamavandahaṃ.",
"tha-ap492:10.1": "Bhagavā tamhi samaye,",
"tha-ap492:10.2": "vuṭṭhahitvā samādhito;",
"tha-ap492:10.3": "Yugamattaṃ pekkhamāno,",
"tha-ap492:10.4": "nisīdi purisuttamo.",
"tha-ap492:11.1": "Sāvako varuṇo nāma,",
"tha-ap492:11.2": "piyadassissa satthuno;",
"tha-ap492:11.3": "Vasīsatasahassehi,",
"tha-ap492:11.4": "upagacchi vināyakaṃ.",
"tha-ap492:12.1": "Piyadassī ca bhagavā,",
"tha-ap492:12.2": "lokajeṭṭho narāsabho;",
"tha-ap492:12.3": "Bhikkhusaṃghe nisīditvā,",
"tha-ap492:12.4": "sitaṃ pātukarī jino.",
"tha-ap492:13.1": "Anuruddho upaṭṭhāko,",
"tha-ap492:13.2": "piyadassissa satthuno;",
"tha-ap492:13.3": "Ekaṃsaṃ cīvaraṃ katvā,",
"tha-ap492:13.4": "apucchittha mahāmuniṃ.",
"tha-ap492:14.1": "‘Ko nu kho bhagavā hetu,",
"tha-ap492:14.2": "sitakammassa satthuno;",
"tha-ap492:14.3": "Kāraṇe vijjamānamhi,",
"tha-ap492:14.4": "satthā pātukare sitaṃ’.",
"tha-ap492:15.1": "‘Sattāhaṃ sālacchadanaṃ,",
"tha-ap492:15.2": "yo me dhāresi māṇavo;",
"tha-ap492:15.3": "Tassa kammaṃ saritvāna,",
"tha-ap492:15.4": "sitaṃ pātukariṃ ahaṃ.",
"tha-ap492:16.1": "Anokāsaṃ na passāmi,",
"tha-ap492:16.2": "yattha puññaṃ vipaccati;",
"tha-ap492:16.3": "Devaloke manusse vā,",
"tha-ap492:16.4": "okāsova na sammati.",
"tha-ap492:17.1": "Devaloke vasantassa,",
"tha-ap492:17.2": "puññakammasamaṅgino;",
"tha-ap492:17.3": "Yāvatā parisā tassa,",
"tha-ap492:17.4": "sālacchannā bhavissati.",
"tha-ap492:18.1": "Tattha dibbehi naccehi,",
"tha-ap492:18.2": "gītehi vāditehi ca;",
"tha-ap492:18.3": "Ramissati sadā santo,",
"tha-ap492:18.4": "puññakammasamāhito.",
"tha-ap492:19.1": "Yāvatā parisā tassa,",
"tha-ap492:19.2": "gandhagandhī bhavissati;",
"tha-ap492:19.3": "Sālassa pupphavasso ca,",
"tha-ap492:19.4": "pavassissati tāvade.",
"tha-ap492:20.1": "Tato cutoyaṃ manujo,",
"tha-ap492:20.2": "mānusaṃ āgamissati;",
"tha-ap492:20.3": "Idhāpi sālacchadanaṃ,",
"tha-ap492:20.4": "sabbakālaṃ dharissati.",
"tha-ap492:21.1": "Idha naccañca gītañca,",
"tha-ap492:21.2": "sammatāḷasamāhitaṃ;",
"tha-ap492:21.3": "Parivāressanti maṃ niccaṃ,",
"tha-ap492:21.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap492:22.1": "Uggacchante ca sūriye,",
"tha-ap492:22.2": "sālavassaṃ pavassati;",
"tha-ap492:22.3": "Puññakammena saṃyuttaṃ,",
"tha-ap492:22.4": "vassate sabbakālikaṃ.",
"tha-ap492:23.1": "Aṭṭhārase kappasate,",
"tha-ap492:23.2": "okkākakulasambhavo;",
"tha-ap492:23.3": "Gotamo nāma gottena,",
"tha-ap492:23.4": "satthā loke bhavissati.",
"tha-ap492:24.1": "Tassa dhammesu dāyādo,",
"tha-ap492:24.2": "oraso dhammanimmito;",
"tha-ap492:24.3": "Sabbāsave pariññāya,",
"tha-ap492:24.4": "nibbāyissatināsavo.",
"tha-ap492:25.1": "Dhammaṃ abhisamentassa,",
"tha-ap492:25.2": "sālacchannaṃ bhavissati;",
"tha-ap492:25.3": "Citake jhāyamānassa,",
"tha-ap492:25.4": "chadanaṃ tattha hessati’.",
"tha-ap492:26.1": "Vipākaṃ kittayitvāna,",
"tha-ap492:26.2": "piyadassī mahāmuni;",
"tha-ap492:26.3": "Parisāya dhammaṃ desesi,",
"tha-ap492:26.4": "tappento dhammavuṭṭhiyā.",
"tha-ap492:27.1": "Tiṃsakappāni devesu,",
"tha-ap492:27.2": "devarajjamakārayiṃ;",
"tha-ap492:27.3": "Saṭṭhi ca sattakkhattuñca,",
"tha-ap492:27.4": "cakkavattī ahosahaṃ.",
"tha-ap492:28.1": "Devalokā idhāgantvā,",
"tha-ap492:28.2": "labhāmi vipulaṃ sukhaṃ;",
"tha-ap492:28.3": "Idhāpi sālacchadanaṃ,",
"tha-ap492:28.4": "maṇḍapassa idaṃ phalaṃ.",
"tha-ap492:29.1": "Ayaṃ pacchimako mayhaṃ,",
"tha-ap492:29.2": "carimo vattate bhavo;",
"tha-ap492:29.3": "Idhāpi sālacchadanaṃ,",
"tha-ap492:29.4": "hessati sabbakālikaṃ.",
"tha-ap492:30.1": "Mahāmuniṃ tosayitvā,",
"tha-ap492:30.2": "gotamaṃ sakyapuṅgavaṃ;",
"tha-ap492:30.3": "Pattomhi acalaṃ ṭhānaṃ,",
"tha-ap492:30.4": "hitvā jayaparājayaṃ.",
"tha-ap492:31.1": "Aṭṭhārase kappasate,",
"tha-ap492:31.2": "yaṃ buddhamabhipūjayiṃ;",
"tha-ap492:31.3": "Duggatiṃ nābhijānāmi,",
"tha-ap492:31.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap492:32.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap492:32.4": "viharāmi anāsavo.",
"tha-ap492:33.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap492:33.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap492:34.1": "Paṭisambhidā catasso, … pe …",
"tha-ap492:34.4": "kataṃ buddhassa sāsanaṃ”. #5158",
"tha-ap492:35.1": "Itthaṃ sudaṃ āyasmā sālamaṇḍapiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap492:36.1": "Sālamaṇḍapiyattherassāpadānaṃ dasamaṃ.",
"tha-ap492:37.1": "Paṃsukūlavaggo ekūnapaññāsamo.",
"tha-ap492:38.1": "Tassuddānaṃ",
"tha-ap492:39.1": "Paṃsukūlaṃ buddhasaññī,",
"tha-ap492:39.2": "bhisado ñāṇakittako;",
"tha-ap492:39.3": "Candanī dhātupūjī ca,",
"tha-ap492:39.4": "pulinuppādakopi ca.",
"tha-ap492:40.1": "Taraṇo dhammaruciko,",
"tha-ap492:40.2": "sālamaṇḍapiyo tathā;",
"tha-ap492:40.3": "Satāni dve honti gāthā,",
"tha-ap492:40.4": "ūnavīsatimeva ca."
}