{
"tha-ap63:1.1": "Therāpadāna",
"tha-ap63:2.1": "Sakacintaniyavagga",
"tha-ap63:3.1": "1 Sakacintaniyattheraapadāna",
"tha-ap63:4.1": "“Pavanaṃ kānanaṃ disvā,",
"tha-ap63:4.2": "appasaddamanāvilaṃ;",
"tha-ap63:4.3": "Isīnaṃ anuciṇṇaṃva,",
"tha-ap63:4.4": "āhutīnaṃ paṭiggahaṃ.",
"tha-ap63:5.1": "Thūpaṃ katvāna pulinaṃ,",
"tha-ap63:5.2": "nānāpupphaṃ samokiriṃ;",
"tha-ap63:5.3": "Sammukhā viya sambuddhaṃ,",
"tha-ap63:5.4": "nimmitaṃ abhivandahaṃ.",
"tha-ap63:6.1": "Sattaratanasampanno,",
"tha-ap63:6.2": "rājā raṭṭhamhi issaro;",
"tha-ap63:6.3": "Sakakammābhiraddhohaṃ,",
"tha-ap63:6.4": "pupphapūjāyidaṃ phalaṃ.",
"tha-ap63:7.1": "Ekanavutito kappe,",
"tha-ap63:7.2": "yaṃ pupphamabhiropayiṃ;",
"tha-ap63:7.3": "Duggatiṃ nābhijānāmi,",
"tha-ap63:7.4": "pupphapūjāyidaṃ phalaṃ.",
"tha-ap63:8.1": "Asītikappenantayaso,",
"tha-ap63:8.2": "cakkavattī ahosahaṃ;",
"tha-ap63:8.3": "Sattaratanasampanno,",
"tha-ap63:8.4": "catudīpamhi issaro.",
"tha-ap63:9.1": "Paṭisambhidā catasso,",
"tha-ap63:9.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap63:9.3": "Chaḷabhiññā sacchikatā,",
"tha-ap63:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap63:10.1": "Itthaṃ sudaṃ āyasmā sakacintaniyo thero imā gāthāyo abhāsitthāti.",
"tha-ap63:11.1": "Sakacintaniyattherassāpadānaṃ paṭhamaṃ."
}