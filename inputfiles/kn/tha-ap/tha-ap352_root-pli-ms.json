{
"tha-ap352:1.1": "Therāpadāna",
"tha-ap352:2.1": "Ekapadumiyavagga",
"tha-ap352:3.1": "10. Ekañjaliyattheraapadāna",
"tha-ap352:4.1": "“Romaso nāma sambuddho,",
"tha-ap352:4.2": "nadīkūle vasī tadā;",
"tha-ap352:4.3": "Addasaṃ virajaṃ buddhaṃ,",
"tha-ap352:4.4": "pītaraṃsiṃva bhāṇumaṃ.",
"tha-ap352:5.1": "Ukkāmukhapahaṭṭhaṃva,",
"tha-ap352:5.2": "khadiraṅgārasannibhaṃ;",
"tha-ap352:5.3": "Osadhiṃva virocantaṃ,",
"tha-ap352:5.4": "ekañjalimakāsahaṃ.",
"tha-ap352:6.1": "Catunnavutito kappe,",
"tha-ap352:6.2": "yaṃ añjalimakāsahaṃ;",
"tha-ap352:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap352:6.4": "añjaliyā idaṃ phalaṃ.",
"tha-ap352:7.1": "Paṭisambhidā catasso, … pe …",
"tha-ap352:7.4": "kataṃ buddhassa sāsanaṃ”. #3133",
"tha-ap352:8.1": "Itthaṃ sudaṃ āyasmā ekañjaliyo thero imā gāthāyo abhāsitthāti.",
"tha-ap352:9.1": "Ekañjaliyattherassāpadānaṃ dasamaṃ.",
"tha-ap352:10.1": "Ekapadumiyavaggo pañcatiṃsatimo.",
"tha-ap352:11.1": "Tassuddānaṃ",
"tha-ap352:12.1": "Padumī uppalamālī,",
"tha-ap352:12.2": "dhajo kiṅkaṇikaṃ naḷaṃ;",
"tha-ap352:12.3": "Campako padumo muṭṭhi,",
"tha-ap352:12.4": "tindukekañjalī tathā;",
"tha-ap352:12.5": "Cha ca saṭṭhi ca gāthāyo,",
"tha-ap352:12.6": "gaṇitāyo vibhāvibhi."
}