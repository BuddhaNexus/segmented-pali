{
"tha-ap187:1.1": "Therāpadāna",
"tha-ap187:2.1": "Kuṭajapupphiyavagga",
"tha-ap187:3.1": "5. Isimuggadāyakattheraapadāna",
"tha-ap187:4.1": "“Udentaṃ sataraṃsiṃva,",
"tha-ap187:4.2": "pītaraṃsiṃva bhāṇumaṃ;",
"tha-ap187:4.3": "Kakudhaṃ vilasantaṃva,",
"tha-ap187:4.4": "padumuttaranāyakaṃ.",
"tha-ap187:5.1": "Isimuggāni pisitvā,",
"tha-ap187:5.2": "madhukhudde anīḷake;",
"tha-ap187:5.3": "Pāsādeva ṭhito santo,",
"tha-ap187:5.4": "adāsiṃ lokabandhuno.",
"tha-ap187:6.1": "Aṭṭhasatasahassāni,",
"tha-ap187:6.2": "ahesuṃ buddhasāvakā;",
"tha-ap187:6.3": "Sabbesaṃ pattapūrentaṃ,",
"tha-ap187:6.4": "tato cāpi bahuttaraṃ.",
"tha-ap187:7.1": "Tena cittappasādena,",
"tha-ap187:7.2": "sukkamūlena codito;",
"tha-ap187:7.3": "Kappānaṃ satasahassaṃ,",
"tha-ap187:7.4": "duggatiṃ nupapajjahaṃ.",
"tha-ap187:8.1": "Cattālīsamhi sahasse,",
"tha-ap187:8.2": "kappānaṃ aṭṭhatiṃsa te;",
"tha-ap187:8.3": "Isimuggasanāmā te,",
"tha-ap187:8.4": "cakkavattī mahabbalā.",
"tha-ap187:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap187:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap187:10.1": "Itthaṃ sudaṃ āyasmā isimuggadāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap187:11.1": "Isimuggadāyakattherassāpadānaṃ pañcamaṃ."
}