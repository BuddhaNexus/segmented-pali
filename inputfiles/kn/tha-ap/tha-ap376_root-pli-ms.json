{
"tha-ap376:1.1": "Therāpadāna",
"tha-ap376:2.1": "Bodhivandanavagga",
"tha-ap376:3.1": "4 Paṭṭipupphiyattheraapadāna",
"tha-ap376:4.1": "“Yadā nibbāyi sambuddho,",
"tha-ap376:4.2": "mahesī padumuttaro;",
"tha-ap376:4.3": "Samāgamma janā sabbe,",
"tha-ap376:4.4": "sarīraṃ nīharanti te.",
"tha-ap376:5.1": "Nīharante sarīramhi,",
"tha-ap376:5.2": "vajjamānāsu bherisu;",
"tha-ap376:5.3": "Pasannacitto sumano,",
"tha-ap376:5.4": "paṭṭipupphaṃ apūjayiṃ.",
"tha-ap376:6.1": "Satasahassito kappe,",
"tha-ap376:6.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap376:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap376:6.4": "sarīrapūjite phalaṃ.",
"tha-ap376:7.1": "Kilesā jhāpitā mayhaṃ,",
"tha-ap376:7.2": "bhavā sabbe samūhatā;",
"tha-ap376:7.3": "Nāgova bandhanaṃ chetvā,",
"tha-ap376:7.4": "viharāmi anāsavo.",
"tha-ap376:8.1": "Svāgataṃ vata me āsi,",
"tha-ap376:8.2": "Mama buddhassa santike;",
"tha-ap376:8.3": "Tisso vijjā anuppattā,",
"tha-ap376:8.4": "Kataṃ buddhassa sāsanaṃ.",
"tha-ap376:9.1": "Paṭisambhidā catasso, … pe …",
"tha-ap376:9.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap376:10.1": "Itthaṃ sudaṃ āyasmā paṭṭipupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap376:11.1": "Paṭṭipupphiyattherassāpadānaṃ catutthaṃ."
}