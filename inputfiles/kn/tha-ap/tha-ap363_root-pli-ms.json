{
  "tha-ap363:0.1": "Therāpadāna ",
  "tha-ap363:0.2": "Mandāravapupphiyavagga ",
  "tha-ap363:0.3": "1 Mandāravapupphiyattheraapadāna ",
  "tha-ap363:1.1": "“Tāvatiṁsā idhāgantvā, ",
  "tha-ap363:1.2": "maṅgalo nāma māṇavo; ",
  "tha-ap363:1.3": "Mandāravaṁ gahetvāna, ",
  "tha-ap363:1.4": "vipassissa mahesino. ",
  "tha-ap363:2.1": "Samādhinā nisinnassa, ",
  "tha-ap363:2.2": "matthake dhārayiṁ ahaṁ; ",
  "tha-ap363:2.3": "Sattāhaṁ dhārayitvāna, ",
  "tha-ap363:2.4": "devalokaṁ punāgamiṁ. ",
  "tha-ap363:3.1": "Ekanavutito kappe, ",
  "tha-ap363:3.2": "yaṁ pupphamabhipūjayiṁ; ",
  "tha-ap363:3.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap363:3.4": "buddhapūjāyidaṁ phalaṁ. ",
  "tha-ap363:4.1": "Paṭisambhidā catasso, ",
  "tha-ap363:4.2": "vimokkhāpi ca aṭṭhime; ",
  "tha-ap363:4.3": "Chaḷabhiññā sacchikatā, ",
  "tha-ap363:4.4": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap363:5.1": "Itthaṁ sudaṁ āyasmā mandāravapupphiyo thero imā gāthāyo abhāsitthāti. ",
  "tha-ap363:6.1": "Mandāravapupphiyattherassāpadānaṁ paṭhamaṁ. "
}