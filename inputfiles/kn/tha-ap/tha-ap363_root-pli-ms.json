{
"tha-ap363:1.1": "Therāpadāna",
"tha-ap363:2.1": "Mandāravapupphiyavagga",
"tha-ap363:3.1": "1 Mandāravapupphiyattheraapadāna",
"tha-ap363:4.1": "“Tāvatiṃsā idhāgantvā,",
"tha-ap363:4.2": "maṅgalo nāma māṇavo;",
"tha-ap363:4.3": "Mandāravaṃ gahetvāna,",
"tha-ap363:4.4": "vipassissa mahesino.",
"tha-ap363:5.1": "Samādhinā nisinnassa,",
"tha-ap363:5.2": "matthake dhārayiṃ ahaṃ;",
"tha-ap363:5.3": "Sattāhaṃ dhārayitvāna,",
"tha-ap363:5.4": "devalokaṃ punāgamiṃ.",
"tha-ap363:6.1": "Ekanavutito kappe,",
"tha-ap363:6.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap363:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap363:6.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap363:7.1": "Paṭisambhidā catasso,",
"tha-ap363:7.2": "vimokkhāpi ca aṭṭhime;",
"tha-ap363:7.3": "Chaḷabhiññā sacchikatā,",
"tha-ap363:7.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap363:8.1": "Itthaṃ sudaṃ āyasmā mandāravapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap363:9.1": "Mandāravapupphiyattherassāpadānaṃ paṭhamaṃ."
}