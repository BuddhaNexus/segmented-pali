{
  "tha-ap31:0.1": "Therāpadāna ",
  "tha-ap31:0.2": "Subhūtivagga ",
  "tha-ap31:0.3": "9. Ekañjalikattheraapadāna ",
  "tha-ap31:1.1": "“Suvaṇṇavaṇṇaṁ sambuddhaṁ, ",
  "tha-ap31:1.2": "Gacchantaṁ antarāpaṇe; ",
  "tha-ap31:1.3": "Vipassiṁ satthavāhaggaṁ, ",
  "tha-ap31:1.4": "Naravaraṁ vināyakaṁ. ",
  "tha-ap31:2.1": "Adantadamanaṁ tādiṁ, ",
  "tha-ap31:2.2": "mahāvādiṁ mahāmatiṁ; ",
  "tha-ap31:2.3": "Disvā pasanno sumano, ",
  "tha-ap31:2.4": "ekañjalimakāsahaṁ. ",
  "tha-ap31:3.1": "Ekanavutito kappe, ",
  "tha-ap31:3.2": "yamañjaliṁ kariṁ tadā; ",
  "tha-ap31:3.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap31:3.4": "añjalissa idaṁ phalaṁ. ",
  "tha-ap31:4.1": "Paṭisambhidā catasso, ",
  "tha-ap31:4.2": "vimokkhāpi ca aṭṭhime; ",
  "tha-ap31:4.3": "Chaḷabhiññā sacchikatā, ",
  "tha-ap31:4.4": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap31:5.1": "Itthaṁ sudaṁ āyasmā ekañjaliko thero imā gāthāyo abhāsitthāti. ",
  "tha-ap31:6.1": "Ekañjalikattherassāpadānaṁ navamaṁ. "
}