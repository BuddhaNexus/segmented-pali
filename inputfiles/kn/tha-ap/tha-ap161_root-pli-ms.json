{
"tha-ap161:1.1": "Therāpadāna",
"tha-ap161:2.1": "Bandhujīvakavagga",
"tha-ap161:3.1": "9. Punnāgapupphiyattheraapadāna",
"tha-ap161:4.1": "“Kānanaṃ vanamogayha,",
"tha-ap161:4.2": "vasāmi luddako ahaṃ;",
"tha-ap161:4.3": "Punnāgaṃ pupphitaṃ disvā,",
"tha-ap161:4.4": "buddhaseṭṭhaṃ anussariṃ.",
"tha-ap161:5.1": "Taṃ pupphaṃ ocinitvāna,",
"tha-ap161:5.2": "sugandhaṃ gandhitaṃ subhaṃ;",
"tha-ap161:5.3": "Thūpaṃ karitvā puline,",
"tha-ap161:5.4": "buddhassa abhiropayiṃ.",
"tha-ap161:6.1": "Dvenavute ito kappe,",
"tha-ap161:6.2": "yaṃ pupphamabhipūjayiṃ;",
"tha-ap161:6.3": "Duggatiṃ nābhijānāmi,",
"tha-ap161:6.4": "buddhapūjāyidaṃ phalaṃ.",
"tha-ap161:7.1": "Ekamhi navute kappe,",
"tha-ap161:7.2": "eko āsiṃ tamonudo;",
"tha-ap161:7.3": "Sattaratanasampanno,",
"tha-ap161:7.4": "cakkavattī mahabbalo.",
"tha-ap161:8.1": "Paṭisambhidā catasso, … pe …",
"tha-ap161:8.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap161:9.1": "Itthaṃ sudaṃ āyasmā punnāgapupphiyo thero imā gāthāyo abhāsitthāti.",
"tha-ap161:10.1": "Punnāgapupphiyattherassāpadānaṃ navamaṃ."
}