{
"tha-ap501:1.1": "Therāpadāna",
"tha-ap501:2.1": "Kiṅkaṇipupphavagga",
"tha-ap501:3.1": "9 Naḷakuṭidāyakattheraapadāna",
"tha-ap501:4.1": "“Himavantassāvidūre,",
"tha-ap501:4.2": "hārito nāma pabbato;",
"tha-ap501:4.3": "Sayambhū nārado nāma,",
"tha-ap501:4.4": "rukkhamūle vasī tadā.",
"tha-ap501:5.1": "Naḷāgāraṃ karitvāna,",
"tha-ap501:5.2": "tiṇena chādayiṃ ahaṃ;",
"tha-ap501:5.3": "Caṅkamaṃ sodhayitvāna,",
"tha-ap501:5.4": "sayambhussa adāsahaṃ.",
"tha-ap501:6.1": "Tena kammena sukatena,",
"tha-ap501:6.2": "cetanāpaṇidhīhi ca;",
"tha-ap501:6.3": "Jahitvā mānusaṃ dehaṃ,",
"tha-ap501:6.4": "tāvatiṃsamagacchahaṃ.",
"tha-ap501:7.1": "Tattha me sukataṃ byamhaṃ,",
"tha-ap501:7.2": "naḷakuṭikanimmitaṃ;",
"tha-ap501:7.3": "Saṭṭhiyojanamubbedhaṃ,",
"tha-ap501:7.4": "tiṃsayojanavitthataṃ.",
"tha-ap501:8.1": "Catuddasesu kappesu,",
"tha-ap501:8.2": "devaloke ramiṃ ahaṃ;",
"tha-ap501:8.3": "Ekasattatikkhattuñca,",
"tha-ap501:8.4": "devarajjamakārayiṃ.",
"tha-ap501:9.1": "Catutiṃsatikkhattuñca,",
"tha-ap501:9.2": "cakkavattī ahosahaṃ;",
"tha-ap501:9.3": "Padesarajjaṃ vipulaṃ,",
"tha-ap501:9.4": "gaṇanāto asaṅkhiyaṃ.",
"tha-ap501:10.1": "Dhammapāsādamāruyha,",
"tha-ap501:10.2": "sabbākāravarūpamaṃ;",
"tha-ap501:10.3": "Yadicchakāhaṃ vihare,",
"tha-ap501:10.4": "sakyaputtassa sāsane.",
"tha-ap501:11.1": "Ekatiṃse ito kappe,",
"tha-ap501:11.2": "yaṃ kammamakariṃ tadā;",
"tha-ap501:11.3": "Duggatiṃ nābhijānāmi,",
"tha-ap501:11.4": "naḷakuṭiyidaṃ phalaṃ.",
"tha-ap501:12.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"tha-ap501:12.4": "viharāmi anāsavo.",
"tha-ap501:13.1": "Svāgataṃ vata me āsi, … pe …",
"tha-ap501:13.4": "kataṃ buddhassa sāsanaṃ.",
"tha-ap501:14.1": "Paṭisambhidā catasso, … pe …",
"tha-ap501:14.4": "kataṃ buddhassa sāsanaṃ”.",
"tha-ap501:15.1": "Itthaṃ sudaṃ āyasmā naḷakuṭidāyako thero imā gāthāyo abhāsitthāti.",
"tha-ap501:16.1": "Naḷakuṭidāyakattherassāpadānaṃ navamaṃ."
}