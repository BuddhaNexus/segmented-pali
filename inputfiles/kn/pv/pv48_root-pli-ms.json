{
"pv48:1.1": "Petavatthu",
"pv48:2.1": "Mahāvagga",
"pv48:3.1": "13. Akkharukkhapetavatthu",
"pv48:4.1": "“Yaṃ dadāti na taṃ hoti,",
"pv48:4.2": "Detheva dānaṃ datvā ubhayaṃ tarati;",
"pv48:4.3": "Ubhayaṃ tena dānena gacchati,",
"pv48:4.4": "Jāgaratha māpamajjathā”ti.",
"pv48:5.1": "Akkharukkhapetavatthu terasamaṃ."
}