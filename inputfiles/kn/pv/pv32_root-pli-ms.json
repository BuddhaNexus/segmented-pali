{
"pv32:1.1": "Petavatthu",
"pv32:2.1": "Cūḷavagga",
"pv32:3.1": "7. Migaluddakapetavatthu",
"pv32:4.1": "“Naranāripurakkhato yuvā,",
"pv32:4.2": "Rajanīyehi kāmaguṇehi sobhasi;",
"pv32:4.3": "Divasaṃ anubhosi kāraṇaṃ,",
"pv32:4.4": "Kimakāsi purimāya jātiyā”ti.",
"pv32:5.1": "“Ahaṃ rājagahe ramme,",
"pv32:5.2": "ramaṇīye giribbaje;",
"pv32:5.3": "Migaluddo pure āsiṃ,",
"pv32:5.4": "lohitapāṇi dāruṇo.",
"pv32:6.1": "Avirodhakaresu pāṇisu,",
"pv32:6.2": "Puthusattesu paduṭṭhamānaso;",
"pv32:6.3": "Vicariṃ atidāruṇo sadā,",
"pv32:6.4": "Parahiṃsāya rato asaññato.",
"pv32:7.1": "Tassa me sahāyo suhadayo,",
"pv32:7.2": "Saddho āsi upāsako;",
"pv32:7.3": "Sopi maṃ anukampanto,",
"pv32:7.4": "Nivāresi punappunaṃ.",
"pv32:8.1": "‘Mākāsi pāpakaṃ kammaṃ,",
"pv32:8.2": "Mā tāta duggatiṃ agā;",
"pv32:8.3": "Sace icchasi pecca sukhaṃ,",
"pv32:8.4": "Virama pāṇavadhā asaṃyamā’.",
"pv32:9.1": "Tassāhaṃ vacanaṃ sutvā,",
"pv32:9.2": "Sukhakāmassa hitānukampino;",
"pv32:9.3": "Nākāsiṃ sakalānusāsaniṃ,",
"pv32:9.4": "Cirapāpābhirato abuddhimā.",
"pv32:10.1": "So maṃ puna bhūrisumedhaso,",
"pv32:10.2": "Anukampāya saṃyame nivesayi;",
"pv32:10.3": "‘Sace divā hanasi pāṇino,",
"pv32:10.4": "Atha te rattiṃ bhavatu saṃyamo’.",
"pv32:11.1": "Svāhaṃ divā hanitvā pāṇino,",
"pv32:11.2": "Virato rattimahosi saññato;",
"pv32:11.3": "Rattāhaṃ paricāremi,",
"pv32:11.4": "Divā khajjāmi duggato.",
"pv32:12.1": "Tassa kammassa kusalassa,",
"pv32:12.2": "Anubhomi rattiṃ amānusiṃ;",
"pv32:12.3": "Divā paṭihatāva kukkurā,",
"pv32:12.4": "Upadhāvanti samantā khādituṃ.",
"pv32:13.1": "Ye ca te satatānuyogino,",
"pv32:13.2": "Dhuvaṃ payuttā sugatassa sāsane;",
"pv32:13.3": "Maññāmi te amatameva kevalaṃ,",
"pv32:13.4": "Adhigacchanti padaṃ asaṅkhatan”ti.",
"pv32:14.1": "Migaluddakapetavatthu sattamaṃ."
}