{
  "pv33:0.1": "Petavatthu ",
  "pv33:0.2": "Cūḷavagga ",
  "pv33:0.3": "8. Dutiyamigaluddakapetavatthu ",
  "pv33:1.1": "“Kūṭāgāre ca pāsāde, ",
  "pv33:1.2": "pallaṅke gonakatthate; ",
  "pv33:1.3": "Pañcaṅgikena turiyena, ",
  "pv33:1.4": "ramasi suppavādite. ",
  "pv33:2.1": "Tato ratyā vivasāne, ",
  "pv33:2.2": "sūriyuggamanaṁ pati; ",
  "pv33:2.3": "Apaviddho susānasmiṁ, ",
  "pv33:2.4": "bahudukkhaṁ nigacchasi. ",
  "pv33:3.1": "Kiṁ nu kāyena vācāya, ",
  "pv33:3.2": "manasā dukkaṭaṁ kataṁ; ",
  "pv33:3.3": "Kissa kammavipākena, ",
  "pv33:3.4": "idaṁ dukkhaṁ nigacchasi”. ",
  "pv33:4.1": "“Ahaṁ rājagahe ramme, ",
  "pv33:4.2": "ramaṇīye giribbaje; ",
  "pv33:4.3": "Migaluddo pure āsiṁ, ",
  "pv33:4.4": "luddo cāsimasaññato. ",
  "pv33:5.1": "Tassa me sahāyo suhadayo, ",
  "pv33:5.2": "Saddho āsi upāsako; ",
  "pv33:5.3": "Tassa kulupako bhikkhu, ",
  "pv33:5.4": "Āsi gotamasāvako; ",
  "pv33:5.5": "Sopi maṁ anukampanto, ",
  "pv33:5.6": "Nivāresi punappunaṁ. ",
  "pv33:6.1": "‘Mākāsi pāpakaṁ kammaṁ, ",
  "pv33:6.2": "Mā tāta duggatiṁ agā; ",
  "pv33:6.3": "Sace icchasi pecca sukhaṁ, ",
  "pv33:6.4": "Virama pāṇavadhā asaṁyamā’. ",
  "pv33:7.1": "Tassāhaṁ vacanaṁ sutvā, ",
  "pv33:7.2": "Sukhakāmassa hitānukampino; ",
  "pv33:7.3": "Nākāsiṁ sakalānusāsaniṁ, ",
  "pv33:7.4": "Cirapāpābhirato abuddhimā. ",
  "pv33:8.1": "So maṁ puna bhūrisumedhaso, ",
  "pv33:8.2": "Anukampāya saṁyame nivesayi; ",
  "pv33:8.3": "‘Sace divā hanasi pāṇino, ",
  "pv33:8.4": "Atha te rattiṁ bhavatu saṁyamo’. ",
  "pv33:9.1": "Svāhaṁ divā hanitvā pāṇino, ",
  "pv33:9.2": "Virato rattimahosi saññato; ",
  "pv33:9.3": "Rattāhaṁ paricāremi, ",
  "pv33:9.4": "Divā khajjāmi duggato. ",
  "pv33:10.1": "Tassa kammassa kusalassa, ",
  "pv33:10.2": "Anubhomi rattiṁ amānusiṁ; ",
  "pv33:10.3": "Divā paṭihatāva kukkurā, ",
  "pv33:10.4": "Upadhāvanti samantā khādituṁ. ",
  "pv33:11.1": "Ye ca te satatānuyogino, ",
  "pv33:11.2": "Dhuvaṁ payuttā sugatassa sāsane; ",
  "pv33:11.3": "Maññāmi te amatameva kevalaṁ, ",
  "pv33:11.4": "Adhigacchanti padaṁ asaṅkhatan”ti. ",
  "pv33:12.1": "Dutiyamigaluddakapetavatthu aṭṭhamaṁ. "
}