{
"pv13:1.1": "Petavatthu",
"pv13:2.1": "Ubbarivagga",
"pv13:3.1": "1. Saṃsāramocakapetivatthu",
"pv13:4.1": "“Naggā dubbaṇṇarūpāsi,",
"pv13:4.2": "kisā dhamanisanthatā;",
"pv13:4.3": "Upphāsulike kisike,",
"pv13:4.4": "kā nu tvaṃ idha tiṭṭhasī”ti.",
"pv13:5.1": "“Ahaṃ bhadante petīmhi,",
"pv13:5.2": "duggatā yamalokikā;",
"pv13:5.3": "Pāpakammaṃ karitvāna,",
"pv13:5.4": "petalokaṃ ito gatā”ti.",
"pv13:6.1": "“Kiṃ nu kāyena vācāya,",
"pv13:6.2": "manasā dukkaṭaṃ kataṃ;",
"pv13:6.3": "Kissa kammavipākena,",
"pv13:6.4": "petalokaṃ ito gatā”ti.",
"pv13:7.1": "“Anukampakā mayhaṃ nāhesuṃ bhante,",
"pv13:7.2": "Pitā ca mātā athavāpi ñātakā;",
"pv13:7.3": "Ye maṃ niyojeyyuṃ dadāhi dānaṃ,",
"pv13:7.4": "Pasannacittā samaṇabrāhmaṇānaṃ.",
"pv13:8.1": "Ito ahaṃ vassasatāni pañca,",
"pv13:8.2": "Yaṃ evarūpā vicarāmi naggā;",
"pv13:8.3": "Khudāya taṇhāya ca khajjamānā,",
"pv13:8.4": "Pāpassa kammassa phalaṃ mamedaṃ.",
"pv13:9.1": "Vandāmi taṃ ayya pasannacittā,",
"pv13:9.2": "Anukampa maṃ vīra mahānubhāva;",
"pv13:9.3": "Datvā ca me ādisa yaṃ hi kiñci,",
"pv13:9.4": "Mocehi maṃ duggatiyā bhadante”ti.",
"pv13:10.1": "Sādhūti so paṭissutvā,",
"pv13:10.2": "sāriputtonukampako;",
"pv13:10.3": "Bhikkhūnaṃ ālopaṃ datvā,",
"pv13:10.4": "pāṇimattañca coḷakaṃ;",
"pv13:10.5": "Thālakassa ca pānīyaṃ,",
"pv13:10.6": "tassā dakkhiṇamādisi.",
"pv13:11.1": "Samanantarānuddiṭṭhe,",
"pv13:11.2": "vipāko udapajjatha;",
"pv13:11.3": "Bhojanacchādanapānīyaṃ,",
"pv13:11.4": "dakkhiṇāya idaṃ phalaṃ.",
"pv13:12.1": "Tato suddhā sucivasanā,",
"pv13:12.2": "kāsikuttamadhārinī;",
"pv13:12.3": "Vicittavatthābharaṇā,",
"pv13:12.4": "sāriputtaṃ upasaṅkami.",
"pv13:13.1": "“Abhikkantena vaṇṇena,",
"pv13:13.2": "yā tvaṃ tiṭṭhasi devate;",
"pv13:13.3": "Obhāsentī disā sabbā,",
"pv13:13.4": "osadhī viya tārakā.",
"pv13:14.1": "Kena te tādiso vaṇṇo,",
"pv13:14.2": "kena te idha mijjhati;",
"pv13:14.3": "Uppajjanti ca te bhogā,",
"pv13:14.4": "ye keci manaso piyā.",
"pv13:15.1": "Pucchāmi taṃ devi mahānubhāve,",
"pv13:15.2": "Manussabhūtā kimakāsi puññaṃ;",
"pv13:15.3": "Kenāsi evaṃ jalitānubhāvā,",
"pv13:15.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"pv13:16.1": "“Uppaṇḍukiṃ kisaṃ chātaṃ,",
"pv13:16.2": "naggaṃ sampatitacchaviṃ;",
"pv13:16.3": "Muni kāruṇiko loke,",
"pv13:16.4": "taṃ maṃ addakkhi duggataṃ.",
"pv13:17.1": "Bhikkhūnaṃ ālopaṃ datvā,",
"pv13:17.2": "pāṇimattañca coḷakaṃ;",
"pv13:17.3": "Thālakassa ca pānīyaṃ,",
"pv13:17.4": "mama dakkhiṇamādisi.",
"pv13:18.1": "Ālopassa phalaṃ passa,",
"pv13:18.2": "bhattaṃ vassasataṃ dasa;",
"pv13:18.3": "Bhuñjāmi kāmakāminī,",
"pv13:18.4": "anekarasabyañjanaṃ.",
"pv13:19.1": "Pāṇimattassa coḷassa,",
"pv13:19.2": "vipākaṃ passa yādisaṃ;",
"pv13:19.3": "Yāvatā nandarājassa,",
"pv13:19.4": "vijitasmiṃ paṭicchadā.",
"pv13:20.1": "Tato bahutarā bhante,",
"pv13:20.2": "vatthānacchādanāni me;",
"pv13:20.3": "Koseyyakambalīyāni,",
"pv13:20.4": "khomakappāsikāni ca.",
"pv13:21.1": "Vipulā ca mahagghā ca,",
"pv13:21.2": "tepākāsevalambare;",
"pv13:21.3": "Sāhaṃ taṃ paridahāmi,",
"pv13:21.4": "yaṃ yaṃ hi manaso piyaṃ.",
"pv13:22.1": "Thālakassa ca pānīyaṃ,",
"pv13:22.2": "vipākaṃ passa yādisaṃ;",
"pv13:22.3": "Gambhīrā caturassā ca,",
"pv13:22.4": "pokkharañño sunimmitā.",
"pv13:23.1": "Setodakā suppatitthā,",
"pv13:23.2": "sītā appaṭigandhiyā;",
"pv13:23.3": "Padumuppalasañchannā,",
"pv13:23.4": "vārikiñjakkhapūritā.",
"pv13:24.1": "Sāhaṃ ramāmi kīḷāmi,",
"pv13:24.2": "modāmi akutobhayā;",
"pv13:24.3": "Muniṃ kāruṇikaṃ loke,",
"pv13:24.4": "bhante vanditumāgatā”ti.",
"pv13:25.1": "Saṃsāramocakapetivatthu paṭhamaṃ."
}