{
"pv24:1.1": "Petavatthu",
"pv24:2.1": "Ubbarivagga",
"pv24:3.1": "12. Kaṇṇamuṇḍapetivatthu",
"pv24:4.1": "“Soṇṇasopānaphalakā,",
"pv24:4.2": "soṇṇavālukasanthatā;",
"pv24:4.3": "Tattha sogandhiyā vaggū,",
"pv24:4.4": "sucigandhā manoramā.",
"pv24:5.1": "Nānārukkhehi sañchannā,",
"pv24:5.2": "nānāgandhasameritā;",
"pv24:5.3": "Nānāpadumasañchannā,",
"pv24:5.4": "puṇḍarīkasamotatā.",
"pv24:6.1": "Surabhiṃ sampavāyanti,",
"pv24:6.2": "manuññā māluteritā;",
"pv24:6.3": "Haṃsakoñcābhirudā ca,",
"pv24:6.4": "cakkavakkābhikūjitā.",
"pv24:7.1": "Nānādijagaṇākiṇṇā,",
"pv24:7.2": "nānāsaragaṇāyutā;",
"pv24:7.3": "Nānāphaladharā rukkhā,",
"pv24:7.4": "nānāpupphadharā vanā.",
"pv24:8.1": "Na manussesu īdisaṃ,",
"pv24:8.2": "nagaraṃ yādisaṃ idaṃ;",
"pv24:8.3": "Pāsādā bahukā tuyhaṃ,",
"pv24:8.4": "sovaṇṇarūpiyāmayā;",
"pv24:8.5": "Daddallamānā ābhenti,",
"pv24:8.6": "samantā caturo disā.",
"pv24:9.1": "Pañca dāsisatā tuyhaṃ,",
"pv24:9.2": "yā temā paricārikā;",
"pv24:9.3": "Tā kambukāyūradharā,",
"pv24:9.4": "kañcanāveḷabhūsitā.",
"pv24:10.1": "Pallaṅkā bahukā tuyhaṃ,",
"pv24:10.2": "sovaṇṇarūpiyāmayā;",
"pv24:10.3": "Kadalimigasañchannā,",
"pv24:10.4": "sajjā gonakasanthatā.",
"pv24:11.1": "Yattha tvaṃ vāsūpagatā,",
"pv24:11.2": "sabbakāmasamiddhinī;",
"pv24:11.3": "Sampattāyaḍḍharattāya,",
"pv24:11.4": "tato uṭṭhāya gacchasi.",
"pv24:12.1": "Uyyānabhūmiṃ gantvāna,",
"pv24:12.2": "pokkharaññā samantato;",
"pv24:12.3": "Tassā tīre tuvaṃ ṭhāsi,",
"pv24:12.4": "harite saddale subhe.",
"pv24:13.1": "Tato te kaṇṇamuṇḍo sunakho,",
"pv24:13.2": "Aṅgamaṅgāni khādati;",
"pv24:13.3": "Yadā ca khāyitā āsi,",
"pv24:13.4": "Aṭṭhisaṅkhalikā katā;",
"pv24:13.5": "Ogāhasi pokkharaṇiṃ,",
"pv24:13.6": "Hoti kāyo yathā pure.",
"pv24:14.1": "Tato tvaṃ aṅgapaccaṅgī,",
"pv24:14.2": "sucāru piyadassanā;",
"pv24:14.3": "Vatthena pārupitvāna,",
"pv24:14.4": "āyāsi mama santikaṃ.",
"pv24:15.1": "Kiṃ nu kāyena vācāya,",
"pv24:15.2": "manasā dukkaṭaṃ kataṃ;",
"pv24:15.3": "Kissa kammavipākena,",
"pv24:15.4": "kaṇṇamuṇḍo sunakho tava;",
"pv24:15.5": "Aṅgamaṅgāni khādatī”ti.",
"pv24:16.1": "“Kimilāyaṃ gahapati,",
"pv24:16.2": "saddho āsi upāsako;",
"pv24:16.3": "Tassāhaṃ bhariyā āsiṃ,",
"pv24:16.4": "dussīlā aticārinī.",
"pv24:17.1": "So maṃ aticaramānāya,",
"pv24:17.2": "sāmiko etadabravi;",
"pv24:17.3": "‘Netaṃ channaṃ patirūpaṃ,",
"pv24:17.4": "yaṃ tvaṃ aticarāsi maṃ’.",
"pv24:18.1": "Sāhaṃ ghorañca sapathaṃ,",
"pv24:18.2": "musāvādañca bhāsisaṃ;",
"pv24:18.3": "‘Nāhaṃ taṃ aticarāmi,",
"pv24:18.4": "kāyena uda cetasā.",
"pv24:19.1": "Sacāhaṃ taṃ aticarāmi,",
"pv24:19.2": "kāyena uda cetasā;",
"pv24:19.3": "Kaṇṇamuṇḍoyaṃ sunakho,",
"pv24:19.4": "aṅgamaṅgāni khādatu’.",
"pv24:20.1": "Tassa kammassa vipākaṃ,",
"pv24:20.2": "musāvādassa cūbhayaṃ;",
"pv24:20.3": "Satteva vassasatāni,",
"pv24:20.4": "anubhūtaṃ yato hi me;",
"pv24:20.5": "Kaṇṇamuṇḍo ca sunakho,",
"pv24:20.6": "aṅgamaṅgāni khādati.",
"pv24:21.1": "Tvañca deva bahukāro,",
"pv24:21.2": "atthāya me idhāgato;",
"pv24:21.3": "Sumuttāhaṃ kaṇṇamuṇḍassa,",
"pv24:21.4": "asokā akutobhayā.",
"pv24:22.1": "Tāhaṃ deva namassāmi,",
"pv24:22.2": "yācāmi pañjalīkatā;",
"pv24:22.3": "Bhuñja amānuse kāme,",
"pv24:22.4": "rama deva mayā sahā”ti.",
"pv24:23.1": "“Bhuttā amānusā kāmā,",
"pv24:23.2": "ramitomhi tayā saha;",
"pv24:23.3": "Tāhaṃ subhage yācāmi,",
"pv24:23.4": "khippaṃ paṭinayāhi man”ti.",
"pv24:24.1": "Kaṇṇamuṇḍapetivatthu dvādasamaṃ."
}