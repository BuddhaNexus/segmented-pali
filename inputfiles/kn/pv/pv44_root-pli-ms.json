{
  "pv44:0.1": "Petavatthu ",
  "pv44:0.2": "Mahāvagga ",
  "pv44:0.3": "9. Gūthakhādakapetivatthu ",
  "pv44:1.1": "“Gūthakūpato uggantvā, ",
  "pv44:1.2": "kā nu dīnā patiṭṭhasi; ",
  "pv44:1.3": "Nissaṁsayaṁ pāpakammantā, ",
  "pv44:1.4": "kiṁ nu saddahase tuvan”ti. ",
  "pv44:2.1": "“Ahaṁ bhadante petīmhi, ",
  "pv44:2.2": "duggatā yamalokikā; ",
  "pv44:2.3": "Pāpakammaṁ karitvāna, ",
  "pv44:2.4": "petalokaṁ ito gatā”ti. ",
  "pv44:3.1": "“Kiṁ nu kāyena vācāya, ",
  "pv44:3.2": "manasā dukkaṭaṁ kataṁ; ",
  "pv44:3.3": "Kissa kammavipākena, ",
  "pv44:3.4": "idaṁ dukkhaṁ nigacchasī”ti. ",
  "pv44:4.1": "“Ahu āvāsiko mayhaṁ, ",
  "pv44:4.2": "issukī kulamaccharī; ",
  "pv44:4.3": "Ajjhāsito mayhaṁ ghare, ",
  "pv44:4.4": "kadariyo paribhāsako. ",
  "pv44:5.1": "Tassāhaṁ vacanaṁ sutvā, ",
  "pv44:5.2": "bhikkhavo paribhāsisaṁ; ",
  "pv44:5.3": "Tassa kammavipākena, ",
  "pv44:5.4": "petalokaṁ ito gatā”ti. ",
  "pv44:6.1": "“Amitto mittavaṇṇena, ",
  "pv44:6.2": "yo te āsi kulūpako; ",
  "pv44:6.3": "Kāyassa bhedā duppañño, ",
  "pv44:6.4": "kiṁ nu pecca gatiṁ gato”ti. ",
  "pv44:7.1": "“Tassevāhaṁ pāpakammassa, ",
  "pv44:7.2": "sīse tiṭṭhāmi matthake; ",
  "pv44:7.3": "So ca paravisayaṁ patto, ",
  "pv44:7.4": "mameva paricārako. ",
  "pv44:8.1": "Yaṁ bhadante hadantaññe, ",
  "pv44:8.2": "etaṁ me hoti bhojanaṁ; ",
  "pv44:8.3": "Ahañca kho yaṁ hadāmi, ",
  "pv44:8.4": "etaṁ so upajīvatī”ti. ",
  "pv44:9.1": "Gūthakhādakapetivatthu navamaṁ. "
}