{
"pv26:1.1": "Petavatthu",
"pv26:2.1": "Cūḷavagga",
"pv26:3.1": "1. Abhijjamānapetavatthu",
"pv26:4.1": "“Abhijjamāne vārimhi,",
"pv26:4.2": "gaṅgāya idha gacchasi;",
"pv26:4.3": "Naggo pubbaddhapetova,",
"pv26:4.4": "māladhārī alaṅkato;",
"pv26:4.5": "Kuhiṃ gamissasi peta,",
"pv26:4.6": "kattha vāso bhavissatī”ti.",
"pv26:5.1": "“Cundaṭṭhilaṃ gamissāmi,",
"pv26:5.2": "peto so iti bhāsati;",
"pv26:5.3": "Antare vāsabhagāmaṃ,",
"pv26:5.4": "bārāṇasiṃ ca santike”.",
"pv26:6.1": "Tañca disvā mahāmatto,",
"pv26:6.2": "koliyo iti vissuto;",
"pv26:6.3": "Sattuṃ bhattañca petassa,",
"pv26:6.4": "pītakañca yugaṃ adā.",
"pv26:7.1": "Nāvāya tiṭṭhamānāya,",
"pv26:7.2": "kappakassa adāpayi;",
"pv26:7.3": "Kappakassa padinnamhi,",
"pv26:7.4": "ṭhāne petassa dissatha.",
"pv26:8.1": "Tato suvatthavasano,",
"pv26:8.2": "māladhārī alaṅkato;",
"pv26:8.3": "Ṭhāne ṭhitassa petassa,",
"pv26:8.4": "dakkhiṇā upakappatha;",
"pv26:8.5": "Tasmā dajjetha petānaṃ,",
"pv26:8.6": "anukampāya punappunaṃ.",
"pv26:9.1": "Sātunnavasanā eke,",
"pv26:9.2": "aññe kesanivāsanā;",
"pv26:9.3": "Petā bhattāya gacchanti,",
"pv26:9.4": "pakkamanti disodisaṃ.",
"pv26:10.1": "Dūre eke padhāvitvā,",
"pv26:10.2": "aladdhāva nivattare;",
"pv26:10.3": "Chātā pamucchitā bhantā,",
"pv26:10.4": "bhūmiyaṃ paṭisumbhitā.",
"pv26:11.1": "Te ca tattha papatitā,",
"pv26:11.2": "bhūmiyaṃ paṭisumbhitā;",
"pv26:11.3": "Pubbe akatakalyāṇā,",
"pv26:11.4": "aggidaḍḍhāva ātape.",
"pv26:12.1": "“Mayaṃ pubbe pāpadhammā,",
"pv26:12.2": "gharaṇī kulamātaro;",
"pv26:12.3": "Santesu deyyadhammesu,",
"pv26:12.4": "dīpaṃ nākamha attano.",
"pv26:13.1": "Pahūtaṃ annapānampi,",
"pv26:13.2": "apissu avakirīyati;",
"pv26:13.3": "Sammaggate pabbajite,",
"pv26:13.4": "na ca kiñci adamhase.",
"pv26:14.1": "Akammakāmā alasā,",
"pv26:14.2": "Sādukāmā mahagghasā;",
"pv26:14.3": "Ālopapiṇḍadātāro,",
"pv26:14.4": "Paṭiggahe paribhāsimhase.",
"pv26:15.1": "Te gharā tā ca dāsiyo,",
"pv26:15.2": "tānevābharaṇāni no;",
"pv26:15.3": "Te aññe paricārenti,",
"pv26:15.4": "mayaṃ dukkhassa bhāgino.",
"pv26:16.1": "Veṇī vā avaññā honti,",
"pv26:16.2": "rathakārī ca dubbhikā;",
"pv26:16.3": "Caṇḍālī kapaṇā honti,",
"pv26:16.4": "kappakā ca punappunaṃ.",
"pv26:17.1": "Yāni yāni nihīnāni,",
"pv26:17.2": "kulāni kapaṇāni ca;",
"pv26:17.3": "Tesu tesveva jāyanti,",
"pv26:17.4": "esā maccharino gati.",
"pv26:18.1": "Pubbe ca katakalyāṇā,",
"pv26:18.2": "dāyakā vītamaccharā;",
"pv26:18.3": "Saggaṃ te paripūrenti,",
"pv26:18.4": "obhāsenti ca nandanaṃ.",
"pv26:19.1": "Vejayante ca pāsāde,",
"pv26:19.2": "ramitvā kāmakāmino;",
"pv26:19.3": "Uccākulesu jāyanti,",
"pv26:19.4": "sabhogesu tato cutā.",
"pv26:20.1": "Kūṭāgāre ca pāsāde,",
"pv26:20.2": "pallaṅke gonakatthate;",
"pv26:20.3": "Bījitaṅgā morahatthehi,",
"pv26:20.4": "kule jātā yasassino.",
"pv26:21.1": "Aṅkato aṅkaṃ gacchanti,",
"pv26:21.2": "māladhārī alaṅkatā;",
"pv26:21.3": "Dhātiyo upatiṭṭhanti,",
"pv26:21.4": "sāyaṃ pātaṃ sukhesino.",
"pv26:22.1": "Nayidaṃ akatapuññānaṃ,",
"pv26:22.2": "katapuññānamevidaṃ;",
"pv26:22.3": "Asokaṃ nandanaṃ rammaṃ,",
"pv26:22.4": "tidasānaṃ mahāvanaṃ.",
"pv26:23.1": "Sukhaṃ akatapuññānaṃ,",
"pv26:23.2": "idha natthi parattha ca;",
"pv26:23.3": "Sukhañca katapuññānaṃ,",
"pv26:23.4": "idha ceva parattha ca.",
"pv26:24.1": "Tesaṃ sahabyakāmānaṃ,",
"pv26:24.2": "kattabbaṃ kusalaṃ bahuṃ;",
"pv26:24.3": "Katapuññā hi modanti,",
"pv26:24.4": "sagge bhogasamaṅgino”ti.",
"pv26:25.1": "Abhijjamānapetavatthu paṭhamaṃ."
}