{
"pv49:1.1": "Petavatthu",
"pv49:2.1": "Mahāvagga",
"pv49:3.1": "14. Bhogasaṃharaṇapetavatthu",
"pv49:4.1": "“Mayaṃ bhoge saṃharimhā,",
"pv49:4.2": "samena visamena ca;",
"pv49:4.3": "Te aññe paribhuñjanti,",
"pv49:4.4": "mayaṃ dukkhassa bhāginī”ti.",
"pv49:5.1": "Bhogasaṃharaṇapetavatthu cuddasamaṃ."
}