{
  "pv35:0.1": "Petavatthu ",
  "pv35:0.2": "Cūḷavagga ",
  "pv35:0.3": "10. Dhātuvivaṇṇapetavatthu ",
  "pv35:1.1": "“Antalikkhasmiṁ tiṭṭhanto, ",
  "pv35:1.2": "Duggandho pūti vāyasi; ",
  "pv35:1.3": "Mukhañca te kimayo pūtigandhaṁ, ",
  "pv35:1.4": "Khādanti kiṁ kammamakāsi pubbe. ",
  "pv35:2.1": "Tato satthaṁ gahetvāna, ",
  "pv35:2.2": "okkantanti punappunaṁ; ",
  "pv35:2.3": "Khārena paripphositvā, ",
  "pv35:2.4": "okkantanti punappunaṁ. ",
  "pv35:3.1": "Kiṁ nu kāyena vācāya, ",
  "pv35:3.2": "manasā dukkaṭaṁ kataṁ; ",
  "pv35:3.3": "Kissa kammavipākena, ",
  "pv35:3.4": "idaṁ dukkhaṁ nigacchasī”ti. ",
  "pv35:4.1": "“Ahaṁ rājagahe ramme, ",
  "pv35:4.2": "ramaṇīye giribbaje; ",
  "pv35:4.3": "Issaro dhanadhaññassa, ",
  "pv35:4.4": "supahūtassa mārisa. ",
  "pv35:5.1": "Tassāyaṁ me bhariyā ca, ",
  "pv35:5.2": "dhītā ca suṇisā ca me; ",
  "pv35:5.3": "Tā mālaṁ uppalañcāpi, ",
  "pv35:5.4": "paccagghañca vilepanaṁ; ",
  "pv35:5.5": "Thūpaṁ harantiyo vāresiṁ, ",
  "pv35:5.6": "taṁ pāpaṁ pakataṁ mayā. ",
  "pv35:6.1": "Chaḷāsītisahassāni, ",
  "pv35:6.2": "mayaṁ paccattavedanā; ",
  "pv35:6.3": "Thūpapūjaṁ vivaṇṇetvā, ",
  "pv35:6.4": "paccāma niraye bhusaṁ. ",
  "pv35:7.1": "Ye ca kho thūpapūjāya, ",
  "pv35:7.2": "vattante arahato mahe; ",
  "pv35:7.3": "Ādīnavaṁ pakāsenti, ",
  "pv35:7.4": "vivecayetha ne tato. ",
  "pv35:8.1": "Imā ca passa āyantiyo, ",
  "pv35:8.2": "Māladhārī alaṅkatā; ",
  "pv35:8.3": "Mālāvipākaṁnubhontiyo, ",
  "pv35:8.4": "Samiddhā ca tā yasassiniyo. ",
  "pv35:9.1": "Tañca disvāna accheraṁ, ",
  "pv35:9.2": "abbhutaṁ lomahaṁsanaṁ; ",
  "pv35:9.3": "Namo karonti sappaññā, ",
  "pv35:9.4": "vandanti taṁ mahāmuniṁ. ",
  "pv35:10.1": "Sohaṁ nūna ito gantvā, ",
  "pv35:10.2": "yoniṁ laddhāna mānusiṁ; ",
  "pv35:10.3": "Thūpapūjaṁ karissāmi, ",
  "pv35:10.4": "appamatto punappunan”ti. ",
  "pv35:11.1": "Dhātuvivaṇṇapetavatthu dasamaṁ. ",
  "pv35:12.1": "Cūḷavaggo tatiyo. ",
  "pv35:13.1": "Tassuddānaṁ ",
  "pv35:14.1": "Abhijjamāno kuṇḍiyo, ",
  "pv35:14.2": "rathakārī bhusena ca; ",
  "pv35:14.3": "Kumāro gaṇikā ceva, ",
  "pv35:14.4": "dve luddā piṭṭhipūjanā; ",
  "pv35:14.5": "Vaggo tena pavuccatīti. "
}