{
"pv35:1.1": "Petavatthu",
"pv35:2.1": "Cūḷavagga",
"pv35:3.1": "10. Dhātuvivaṇṇapetavatthu",
"pv35:4.1": "“Antalikkhasmiṃ tiṭṭhanto,",
"pv35:4.2": "Duggandho pūti vāyasi;",
"pv35:4.3": "Mukhañca te kimayo pūtigandhaṃ,",
"pv35:4.4": "Khādanti kiṃ kammamakāsi pubbe.",
"pv35:5.1": "Tato satthaṃ gahetvāna,",
"pv35:5.2": "okkantanti punappunaṃ;",
"pv35:5.3": "Khārena paripphositvā,",
"pv35:5.4": "okkantanti punappunaṃ.",
"pv35:6.1": "Kiṃ nu kāyena vācāya,",
"pv35:6.2": "manasā dukkaṭaṃ kataṃ;",
"pv35:6.3": "Kissa kammavipākena,",
"pv35:6.4": "idaṃ dukkhaṃ nigacchasī”ti.",
"pv35:7.1": "“Ahaṃ rājagahe ramme,",
"pv35:7.2": "ramaṇīye giribbaje;",
"pv35:7.3": "Issaro dhanadhaññassa,",
"pv35:7.4": "supahūtassa mārisa.",
"pv35:8.1": "Tassāyaṃ me bhariyā ca,",
"pv35:8.2": "dhītā ca suṇisā ca me;",
"pv35:8.3": "Tā mālaṃ uppalañcāpi,",
"pv35:8.4": "paccagghañca vilepanaṃ;",
"pv35:8.5": "Thūpaṃ harantiyo vāresiṃ,",
"pv35:8.6": "taṃ pāpaṃ pakataṃ mayā.",
"pv35:9.1": "Chaḷāsītisahassāni,",
"pv35:9.2": "mayaṃ paccattavedanā;",
"pv35:9.3": "Thūpapūjaṃ vivaṇṇetvā,",
"pv35:9.4": "paccāma niraye bhusaṃ.",
"pv35:10.1": "Ye ca kho thūpapūjāya,",
"pv35:10.2": "vattante arahato mahe;",
"pv35:10.3": "Ādīnavaṃ pakāsenti,",
"pv35:10.4": "vivecayetha ne tato.",
"pv35:11.1": "Imā ca passa āyantiyo,",
"pv35:11.2": "Māladhārī alaṅkatā;",
"pv35:11.3": "Mālāvipākaṃnubhontiyo,",
"pv35:11.4": "Samiddhā ca tā yasassiniyo.",
"pv35:12.1": "Tañca disvāna accheraṃ,",
"pv35:12.2": "abbhutaṃ lomahaṃsanaṃ;",
"pv35:12.3": "Namo karonti sappaññā,",
"pv35:12.4": "vandanti taṃ mahāmuniṃ.",
"pv35:13.1": "Sohaṃ nūna ito gantvā,",
"pv35:13.2": "yoniṃ laddhāna mānusiṃ;",
"pv35:13.3": "Thūpapūjaṃ karissāmi,",
"pv35:13.4": "appamatto punappunan”ti.",
"pv35:14.1": "Dhātuvivaṇṇapetavatthu dasamaṃ.",
"pv35:15.1": "Cūḷavaggo tatiyo.",
"pv35:16.1": "Tassuddānaṃ",
"pv35:17.1": "Abhijjamāno kuṇḍiyo,",
"pv35:17.2": "rathakārī bhusena ca;",
"pv35:17.3": "Kumāro gaṇikā ceva,",
"pv35:17.4": "dve luddā piṭṭhipūjanā;",
"pv35:17.5": "Vaggo tena pavuccatīti."
}