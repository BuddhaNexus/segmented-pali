{
"pv39:1.1": "Petavatthu",
"pv39:2.1": "Mahāvagga",
"pv39:3.1": "4. Revatīpetavatthu",
"pv39:4.1": "“Uṭṭhehi revate supāpadhamme,",
"pv39:4.2": "Apārutadvāre adānasīle;",
"pv39:4.3": "Nessāma taṃ yattha thunanti duggatā,",
"pv39:4.4": "Samappitā nerayikā dukhenā”ti.",
"pv39:5.1": "Icceva vatvāna yamassa dūtā,",
"pv39:5.2": "Te dve yakkhā lohitakkhā brahantā;",
"pv39:5.3": "Paccekabāhāsu gahetvā revataṃ,",
"pv39:5.4": "Pakkāmayuṃ devagaṇassa santike.",
"pv39:6.1": "“Ādiccavaṇṇaṃ ruciraṃ pabhassaraṃ,",
"pv39:6.2": "Byamhaṃ subhaṃ kañcanajālachannaṃ;",
"pv39:6.3": "Kassetamākiṇṇajanaṃ vimānaṃ,",
"pv39:6.4": "Suriyassa raṃsīriva jotamānaṃ.",
"pv39:7.1": "Nārīgaṇā candanasāralittā,",
"pv39:7.2": "Ubhato vimānaṃ upasobhayanti;",
"pv39:7.3": "Taṃ dissati suriyasamānavaṇṇaṃ,",
"pv39:7.4": "Ko modati saggapatto vimāne”ti.",
"pv39:8.1": "“Bārāṇasiyaṃ nandiyo nāmāsi,",
"pv39:8.2": "Upāsako amaccharī dānapati vadaññū;",
"pv39:8.3": "Tassetamākiṇṇajanaṃ vimānaṃ,",
"pv39:8.4": "Suriyassa raṃsīriva jotamānaṃ.",
"pv39:9.1": "Nārīgaṇā candanasāralittā,",
"pv39:9.2": "Ubhato vimānaṃ upasobhayanti;",
"pv39:9.3": "Taṃ dissati suriyasamānavaṇṇaṃ,",
"pv39:9.4": "So modati saggapatto vimāne”ti.",
"pv39:10.1": "“Nandiyassāhaṃ bhariyā,",
"pv39:10.2": "Agārinī sabbakulassa issarā;",
"pv39:10.3": "Bhattu vimāne ramissāmi dānahaṃ,",
"pv39:10.4": "Na patthaye nirayadassanāyā”ti.",
"pv39:11.1": "“Eso te nirayo supāpadhamme,",
"pv39:11.2": "Puññaṃ tayā akataṃ jīvaloke;",
"pv39:11.3": "Na hi maccharī rosako pāpadhammo,",
"pv39:11.4": "Saggūpagānaṃ labhati sahabyatan”ti.",
"pv39:12.1": "“Kiṃ nu gūthañca muttañca,",
"pv39:12.2": "asucī paṭidissati;",
"pv39:12.3": "Duggandhaṃ kimidaṃ mīḷhaṃ,",
"pv39:12.4": "kimetaṃ upavāyatī”ti.",
"pv39:13.1": "“Esa saṃsavako nāma,",
"pv39:13.2": "gambhīro sataporiso;",
"pv39:13.3": "Yattha vassasahassāni,",
"pv39:13.4": "tuvaṃ paccasi revate”ti.",
"pv39:14.1": "“Kiṃ nu kāyena vācāya,",
"pv39:14.2": "manasā dukkaṭaṃ kataṃ;",
"pv39:14.3": "Kena saṃsavako laddho,",
"pv39:14.4": "gambhīro sataporiso”ti.",
"pv39:15.1": "“Samaṇe brāhmaṇe cāpi,",
"pv39:15.2": "aññe vāpi vanibbake;",
"pv39:15.3": "Musāvādena vañcesi,",
"pv39:15.4": "taṃ pāpaṃ pakataṃ tayā.",
"pv39:16.1": "Tena saṃsavako laddho,",
"pv39:16.2": "gambhīro sataporiso;",
"pv39:16.3": "Tattha vassasahassāni,",
"pv39:16.4": "tuvaṃ paccasi revate.",
"pv39:17.1": "Hatthepi chindanti athopi pāde,",
"pv39:17.2": "Kaṇṇepi chindanti athopi nāsaṃ;",
"pv39:17.3": "Athopi kākoḷagaṇā samecca,",
"pv39:17.4": "Saṅgamma khādanti viphandamānan”ti.",
"pv39:18.1": "“Sādhu kho maṃ paṭinetha,",
"pv39:18.2": "kāhāmi kusalaṃ bahuṃ;",
"pv39:18.3": "Dānena samacariyāya,",
"pv39:18.4": "saṃyamena damena ca;",
"pv39:18.5": "Yaṃ katvā sukhitā honti,",
"pv39:18.6": "na ca pacchānutappare”ti.",
"pv39:19.1": "“Pure tuvaṃ pamajjitvā,",
"pv39:19.2": "idāni paridevasi;",
"pv39:19.3": "Sayaṃ katānaṃ kammānaṃ,",
"pv39:19.4": "vipākaṃ anubhossasī”ti.",
"pv39:20.1": "“Ko devalokato manussalokaṃ,",
"pv39:20.2": "Gantvāna puṭṭho me evaṃ vadeyya;",
"pv39:20.3": "‘Nikkhittadaṇḍesu dadātha dānaṃ,",
"pv39:20.4": "Acchādanaṃ seyya mathannapānaṃ;",
"pv39:20.5": "Na hi maccharī rosako pāpadhammo,",
"pv39:20.6": "Saggūpagānaṃ labhati sahabyataṃ’.",
"pv39:21.1": "Sāhaṃ nūna ito gantvā,",
"pv39:21.2": "yoniṃ laddhāna mānusiṃ;",
"pv39:21.3": "Vadaññū sīlasampannā,",
"pv39:21.4": "kāhāmi kusalaṃ bahuṃ;",
"pv39:21.5": "Dānena samacariyāya,",
"pv39:21.6": "saṃyamena damena ca.",
"pv39:22.1": "Ārāmāni ca ropissaṃ,",
"pv39:22.2": "dugge saṅkamanāni ca;",
"pv39:22.3": "Papañca udapānañca,",
"pv39:22.4": "vippasannena cetasā.",
"pv39:23.1": "Cātuddasiṃ pañcadasiṃ,",
"pv39:23.2": "yā ca pakkhassa aṭṭhamī;",
"pv39:23.3": "Pāṭihāriyapakkhañca,",
"pv39:23.4": "aṭṭhaṅgasusamāgataṃ.",
"pv39:24.1": "Uposathaṃ upavasissaṃ,",
"pv39:24.2": "sadā sīlesu saṃvutā;",
"pv39:24.3": "Na ca dāne pamajjissaṃ,",
"pv39:24.4": "sāmaṃ diṭṭhamidaṃ mayā”ti.",
"pv39:25.1": "Iccevaṃ vippalapantiṃ,",
"pv39:25.2": "phandamānaṃ tato tato;",
"pv39:25.3": "Khipiṃsu niraye ghore,",
"pv39:25.4": "uddhampādaṃ avaṃsiraṃ.",
"pv39:26.1": "“Ahaṃ pure maccharinī ahosiṃ,",
"pv39:26.2": "Paribhāsikā samaṇabrāhmaṇānaṃ;",
"pv39:26.3": "Vitathena ca sāmikaṃ vañcayitvā,",
"pv39:26.4": "Paccāmahaṃ niraye ghorarūpe”ti.",
"pv39:27.1": "Revatīpetavatthu catutthaṃ."
}