{
"pv28:1.1": "Petavatthu",
"pv28:2.1": "Cūḷavagga",
"pv28:3.1": "3. Rathakārapetivatthu",
"pv28:4.1": "“Veḷuriyathambhaṃ ruciraṃ pabhassaraṃ,",
"pv28:4.2": "Vimānamāruyha anekacittaṃ;",
"pv28:4.3": "Tatthacchasi devi mahānubhāve,",
"pv28:4.4": "Pathaddhani pannaraseva cando.",
"pv28:5.1": "Vaṇṇo ca te kanakassa sannibho,",
"pv28:5.2": "Uttattarūpo bhusa dassaneyyo;",
"pv28:5.3": "Pallaṅkaseṭṭhe atule nisinnā,",
"pv28:5.4": "Ekā tuvaṃ natthi ca tuyha sāmiko.",
"pv28:6.1": "Imā ca te pokkharaṇī samantā,",
"pv28:6.2": "Pahūtamalyā bahupuṇḍarīkā;",
"pv28:6.3": "Suvaṇṇacuṇṇehi samantamotthatā,",
"pv28:6.4": "Na tattha paṅko paṇako ca vijjati.",
"pv28:7.1": "Haṃsā cime dassanīyā manoramā,",
"pv28:7.2": "Udakasmimanupariyanti sabbadā;",
"pv28:7.3": "Samayya vaggūpanadanti sabbe,",
"pv28:7.4": "Bindussarā dundubhīnaṃva ghoso.",
"pv28:8.1": "Daddallamānā yasasā yasassinī,",
"pv28:8.2": "Nāvāya ca tvaṃ avalamba tiṭṭhasi;",
"pv28:8.3": "Āḷārapamhe hasite piyaṃvade,",
"pv28:8.4": "Sabbaṅgakalyāṇi bhusaṃ virocasi.",
"pv28:9.1": "Idaṃ vimānaṃ virajaṃ same ṭhitaṃ,",
"pv28:9.2": "Uyyānavantaṃ ratinandivaḍḍhanaṃ;",
"pv28:9.3": "Icchāmahaṃ nāri anomadassane,",
"pv28:9.4": "Tayā saha nandane idha moditun”ti.",
"pv28:10.1": "“Karohi kammaṃ idha vedanīyaṃ,",
"pv28:10.2": "Cittañca te idha nihitaṃ bhavatu;",
"pv28:10.3": "Katvāna kammaṃ idha vedanīyaṃ,",
"pv28:10.4": "Evaṃ mamaṃ lacchasi kāmakāminin”ti.",
"pv28:11.1": "“Sādhū”ti so tassā paṭissuṇitvā,",
"pv28:11.2": "Akāsi kammaṃ tahiṃ vedanīyaṃ;",
"pv28:11.3": "Katvāna kammaṃ tahiṃ vedanīyaṃ,",
"pv28:11.4": "Upapajji so māṇavo tassā sahabyatanti.",
"pv28:12.1": "Rathakārapetivatthu tatiyaṃ.",
"pv28:12.2": "Bhāṇavāraṃ dutiyaṃ."
}