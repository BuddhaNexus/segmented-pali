{
  "pv12:0.1": "Petavatthu ",
  "pv12:0.2": "Uragavagga ",
  "pv12:0.3": "12. Uragapetavatthu ",
  "pv12:1.1": "“Uragova tacaṁ jiṇṇaṁ, ",
  "pv12:1.2": "hitvā gacchati saṁ tanuṁ; ",
  "pv12:1.3": "Evaṁ sarīre nibbhoge, ",
  "pv12:1.4": "pete kālaṅkate sati. ",
  "pv12:2.1": "Ḍayhamāno na jānāti, ",
  "pv12:2.2": "ñātīnaṁ paridevitaṁ; ",
  "pv12:2.3": "Tasmā etaṁ na rodāmi, ",
  "pv12:2.4": "gato so tassa yā gati”. ",
  "pv12:3.1": "“Anabbhito tato āgā, ",
  "pv12:3.2": "nānuññāto ito gato; ",
  "pv12:3.3": "Yathāgato tathā gato, ",
  "pv12:3.4": "tattha kā paridevanā. ",
  "pv12:4.1": "Ḍayhamāno na jānāti, ",
  "pv12:4.2": "ñātīnaṁ paridevitaṁ; ",
  "pv12:4.3": "Tasmā etaṁ na rodāmi, ",
  "pv12:4.4": "gato so tassa yā gati”. ",
  "pv12:5.1": "“Sace rode kisā assaṁ, ",
  "pv12:5.2": "tattha me kiṁ phalaṁ siyā; ",
  "pv12:5.3": "Ñātimittasuhajjānaṁ, ",
  "pv12:5.4": "bhiyyo no aratī siyā. ",
  "pv12:6.1": "Ḍayhamāno na jānāti, ",
  "pv12:6.2": "ñātīnaṁ paridevitaṁ; ",
  "pv12:6.3": "Tasmā etaṁ na rodāmi, ",
  "pv12:6.4": "gato so tassa yā gati”. ",
  "pv12:7.1": "“Yathāpi dārako candaṁ, ",
  "pv12:7.2": "gacchantamanurodati; ",
  "pv12:7.3": "Evaṁ sampadamevetaṁ, ",
  "pv12:7.4": "yo petamanusocati. ",
  "pv12:8.1": "Ḍayhamāno na jānāti, ",
  "pv12:8.2": "ñātīnaṁ paridevitaṁ; ",
  "pv12:8.3": "Tasmā etaṁ na rodāmi, ",
  "pv12:8.4": "gato so tassa yā gati”. ",
  "pv12:9.1": "“Yathāpi brahme udakumbho, ",
  "pv12:9.2": "bhinno appaṭisandhiyo; ",
  "pv12:9.3": "Evaṁ sampadamevetaṁ, ",
  "pv12:9.4": "yo petamanusocati. ",
  "pv12:10.1": "Ḍayhamāno na jānāti, ",
  "pv12:10.2": "ñātīnaṁ paridevitaṁ; ",
  "pv12:10.3": "Tasmā etaṁ na rodāmi, ",
  "pv12:10.4": "gato so tassa yā gatī”ti. ",
  "pv12:11.1": "Uragapetavatthu dvādasamaṁ. ",
  "pv12:12.1": "Uragavaggo paṭhamo. ",
  "pv12:13.1": "Tassuddānaṁ ",
  "pv12:14.1": "Khettañca sūkaraṁ pūti, ",
  "pv12:14.2": "piṭṭhaṁ cāpi tirokuṭṭaṁ; ",
  "pv12:14.3": "Pañcāpi sattaputtañca, ",
  "pv12:14.4": "goṇaṁ pesakārakañca; ",
  "pv12:14.5": "Tathā khallāṭiyaṁ nāgaṁ, ",
  "pv12:14.6": "dvādasaṁ uragañcevāti. "
}