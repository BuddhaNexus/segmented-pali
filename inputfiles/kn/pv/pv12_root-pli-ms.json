{
"pv12:1.1": "Petavatthu",
"pv12:2.1": "Uragavagga",
"pv12:3.1": "12. Uragapetavatthu",
"pv12:4.1": "“Uragova tacaṃ jiṇṇaṃ,",
"pv12:4.2": "hitvā gacchati saṃ tanuṃ;",
"pv12:4.3": "Evaṃ sarīre nibbhoge,",
"pv12:4.4": "pete kālaṅkate sati.",
"pv12:5.1": "Ḍayhamāno na jānāti,",
"pv12:5.2": "ñātīnaṃ paridevitaṃ;",
"pv12:5.3": "Tasmā etaṃ na rodāmi,",
"pv12:5.4": "gato so tassa yā gati”.",
"pv12:6.1": "“Anabbhito tato āgā,",
"pv12:6.2": "nānuññāto ito gato;",
"pv12:6.3": "Yathāgato tathā gato,",
"pv12:6.4": "tattha kā paridevanā.",
"pv12:7.1": "Ḍayhamāno na jānāti,",
"pv12:7.2": "ñātīnaṃ paridevitaṃ;",
"pv12:7.3": "Tasmā etaṃ na rodāmi,",
"pv12:7.4": "gato so tassa yā gati”.",
"pv12:8.1": "“Sace rode kisā assaṃ,",
"pv12:8.2": "tattha me kiṃ phalaṃ siyā;",
"pv12:8.3": "Ñātimittasuhajjānaṃ,",
"pv12:8.4": "bhiyyo no aratī siyā.",
"pv12:9.1": "Ḍayhamāno na jānāti,",
"pv12:9.2": "ñātīnaṃ paridevitaṃ;",
"pv12:9.3": "Tasmā etaṃ na rodāmi,",
"pv12:9.4": "gato so tassa yā gati”.",
"pv12:10.1": "“Yathāpi dārako candaṃ,",
"pv12:10.2": "gacchantamanurodati;",
"pv12:10.3": "Evaṃ sampadamevetaṃ,",
"pv12:10.4": "yo petamanusocati.",
"pv12:11.1": "Ḍayhamāno na jānāti,",
"pv12:11.2": "ñātīnaṃ paridevitaṃ;",
"pv12:11.3": "Tasmā etaṃ na rodāmi,",
"pv12:11.4": "gato so tassa yā gati”.",
"pv12:12.1": "“Yathāpi brahme udakumbho,",
"pv12:12.2": "bhinno appaṭisandhiyo;",
"pv12:12.3": "Evaṃ sampadamevetaṃ,",
"pv12:12.4": "yo petamanusocati.",
"pv12:13.1": "Ḍayhamāno na jānāti,",
"pv12:13.2": "ñātīnaṃ paridevitaṃ;",
"pv12:13.3": "Tasmā etaṃ na rodāmi,",
"pv12:13.4": "gato so tassa yā gatī”ti.",
"pv12:14.1": "Uragapetavatthu dvādasamaṃ.",
"pv12:15.1": "Uragavaggo paṭhamo.",
"pv12:16.1": "Tassuddānaṃ",
"pv12:17.1": "Khettañca sūkaraṃ pūti,",
"pv12:17.2": "piṭṭhaṃ cāpi tirokuṭṭaṃ;",
"pv12:17.3": "Pañcāpi sattaputtañca,",
"pv12:17.4": "goṇaṃ pesakārakañca;",
"pv12:17.5": "Tathā khallāṭiyaṃ nāgaṃ,",
"pv12:17.6": "dvādasaṃ uragañcevāti."
}