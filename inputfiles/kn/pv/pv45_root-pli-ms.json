{
"pv45:1.1": "Petavatthu",
"pv45:2.1": "Mahāvagga",
"pv45:3.1": "10. Gaṇapetavatthu",
"pv45:4.1": "“Naggā dubbaṇṇarūpāttha,",
"pv45:4.2": "kisā dhamanisanthatā;",
"pv45:4.3": "Upphāsulikā kisikā,",
"pv45:4.4": "ke nu tumhettha mārisā”ti.",
"pv45:5.1": "“Mayaṃ bhadante petāmhā,",
"pv45:5.2": "duggatā yamalokikā;",
"pv45:5.3": "Pāpakammaṃ karitvāna,",
"pv45:5.4": "petalokaṃ ito gatā”ti.",
"pv45:6.1": "“Kiṃ nu kāyena vācāya,",
"pv45:6.2": "manasā dukkaṭaṃ kataṃ;",
"pv45:6.3": "Kissa kammavipākena,",
"pv45:6.4": "petalokaṃ ito gatā”ti.",
"pv45:7.1": "“Anāvaṭesu titthesu,",
"pv45:7.2": "vicinimhaddhamāsakaṃ;",
"pv45:7.3": "Santesu deyyadhammesu,",
"pv45:7.4": "dīpaṃ nākamha attano.",
"pv45:8.1": "Nadiṃ upema tasitā,",
"pv45:8.2": "rittakā parivattati;",
"pv45:8.3": "Chāyaṃ upema uṇhesu,",
"pv45:8.4": "ātapo parivattati.",
"pv45:9.1": "Aggivaṇṇo ca no vāto,",
"pv45:9.2": "ḍahanto upavāyati;",
"pv45:9.3": "Etañca bhante arahāma,",
"pv45:9.4": "aññañca pāpakaṃ tato.",
"pv45:10.1": "Api yojanāni gacchāma,",
"pv45:10.2": "chātā āhāragedhino;",
"pv45:10.3": "Aladdhāva nivattāma,",
"pv45:10.4": "aho no appapuññatā.",
"pv45:11.1": "Chātā pamucchitā bhantā,",
"pv45:11.2": "bhūmiyaṃ paṭisumbhitā;",
"pv45:11.3": "Uttānā paṭikirāma,",
"pv45:11.4": "avakujjā patāmase.",
"pv45:12.1": "Te ca tattheva patitā,",
"pv45:12.2": "bhūmiyaṃ paṭisumbhitā;",
"pv45:12.3": "Uraṃ sīsañca ghaṭṭema,",
"pv45:12.4": "aho no appapuññatā.",
"pv45:13.1": "Etañca bhante arahāma,",
"pv45:13.2": "aññañca pāpakaṃ tato;",
"pv45:13.3": "Santesu deyyadhammesu,",
"pv45:13.4": "dīpaṃ nākamha attano.",
"pv45:14.1": "Te hi nūna ito gantvā,",
"pv45:14.2": "yoniṃ laddhāna mānusiṃ;",
"pv45:14.3": "Vadaññū sīlasampannā,",
"pv45:14.4": "kāhāma kusalaṃ bahun”ti.",
"pv45:15.1": "Gaṇapetavatthu dasamaṃ."
}