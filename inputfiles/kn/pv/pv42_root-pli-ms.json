{
  "pv42:0.1": "Petavatthu ",
  "pv42:0.2": "Mahāvagga ",
  "pv42:0.3": "7. Rājaputtapetavatthu ",
  "pv42:1.1": "Pubbe katānaṁ kammānaṁ, ",
  "pv42:1.2": "vipāko mathaye manaṁ; ",
  "pv42:1.3": "Rūpe sadde rase gandhe, ",
  "pv42:1.4": "phoṭṭhabbe ca manorame. ",
  "pv42:2.1": "Naccaṁ gītaṁ ratiṁ khiḍḍaṁ, ",
  "pv42:2.2": "anubhutvā anappakaṁ; ",
  "pv42:2.3": "Uyyāne paricaritvā, ",
  "pv42:2.4": "pavisanto giribbajaṁ. ",
  "pv42:3.1": "Isiṁ sunetta maddakkhi, ",
  "pv42:3.2": "attadantaṁ samāhitaṁ; ",
  "pv42:3.3": "Appicchaṁ hirisampannaṁ, ",
  "pv42:3.4": "uñche pattagate rataṁ. ",
  "pv42:4.1": "Hatthikkhandhato oruyha, ",
  "pv42:4.2": "laddhā bhanteti cābravi; ",
  "pv42:4.3": "Tassa pattaṁ gahetvāna, ",
  "pv42:4.4": "uccaṁ paggayha khattiyo. ",
  "pv42:5.1": "Thaṇḍile pattaṁ bhinditvā, ",
  "pv42:5.2": "hasamāno apakkami; ",
  "pv42:5.3": "“Rañño kitavassāhaṁ putto, ",
  "pv42:5.4": "kiṁ maṁ bhikkhu karissasi”. ",
  "pv42:6.1": "Tassa kammassa pharusassa, ",
  "pv42:6.2": "vipāko kaṭuko ahu; ",
  "pv42:6.3": "Yaṁ rājaputto vedesi, ",
  "pv42:6.4": "nirayamhi samappito. ",
  "pv42:7.1": "Chaḷeva caturāsīti, ",
  "pv42:7.2": "vassāni navutāni ca; ",
  "pv42:7.3": "Bhusaṁ dukkhaṁ nigacchittho, ",
  "pv42:7.4": "niraye katakibbiso. ",
  "pv42:8.1": "Uttānopi ca paccittha, ",
  "pv42:8.2": "nikujjo vāmadakkhiṇo; ",
  "pv42:8.3": "Uddhampādo ṭhito ceva, ",
  "pv42:8.4": "ciraṁ bālo apaccatha. ",
  "pv42:9.1": "Bahūni vassasahassāni, ",
  "pv42:9.2": "pūgāni nahutāni ca; ",
  "pv42:9.3": "Bhusaṁ dukkhaṁ nigacchittho, ",
  "pv42:9.4": "niraye katakibbiso. ",
  "pv42:10.1": "Etādisaṁ kho kaṭukaṁ, ",
  "pv42:10.2": "appaduṭṭhappadosinaṁ; ",
  "pv42:10.3": "Paccanti pāpakammantā, ",
  "pv42:10.4": "isimāsajja subbataṁ. ",
  "pv42:11.1": "So tattha bahuvassāni, ",
  "pv42:11.2": "vedayitvā bahuṁ dukhaṁ; ",
  "pv42:11.3": "Khuppipāsahato nāma, ",
  "pv42:11.4": "peto āsi tato cuto. ",
  "pv42:12.1": "Etamādīnavaṁ ñatvā, ",
  "pv42:12.2": "issaramadasambhavaṁ; ",
  "pv42:12.3": "Pahāya issaramadaṁ, ",
  "pv42:12.4": "nivātamanuvattaye. ",
  "pv42:13.1": "Diṭṭheva dhamme pāsaṁso, ",
  "pv42:13.2": "yo buddhesu sagāravo; ",
  "pv42:13.3": "Kāyassa bhedā sappañño, ",
  "pv42:13.4": "saggaṁ so upapajjatīti. ",
  "pv42:14.1": "Rājaputtapetavatthu sattamaṁ. "
}