{
"pv42:1.1": "Petavatthu",
"pv42:2.1": "Mahāvagga",
"pv42:3.1": "7. Rājaputtapetavatthu",
"pv42:4.1": "Pubbe katānaṃ kammānaṃ,",
"pv42:4.2": "vipāko mathaye manaṃ;",
"pv42:4.3": "Rūpe sadde rase gandhe,",
"pv42:4.4": "phoṭṭhabbe ca manorame.",
"pv42:5.1": "Naccaṃ gītaṃ ratiṃ khiḍḍaṃ,",
"pv42:5.2": "anubhutvā anappakaṃ;",
"pv42:5.3": "Uyyāne paricaritvā,",
"pv42:5.4": "pavisanto giribbajaṃ.",
"pv42:6.1": "Isiṃ sunetta maddakkhi,",
"pv42:6.2": "attadantaṃ samāhitaṃ;",
"pv42:6.3": "Appicchaṃ hirisampannaṃ,",
"pv42:6.4": "uñche pattagate rataṃ.",
"pv42:7.1": "Hatthikkhandhato oruyha,",
"pv42:7.2": "laddhā bhanteti cābravi;",
"pv42:7.3": "Tassa pattaṃ gahetvāna,",
"pv42:7.4": "uccaṃ paggayha khattiyo.",
"pv42:8.1": "Thaṇḍile pattaṃ bhinditvā,",
"pv42:8.2": "hasamāno apakkami;",
"pv42:8.3": "“Rañño kitavassāhaṃ putto,",
"pv42:8.4": "kiṃ maṃ bhikkhu karissasi”.",
"pv42:9.1": "Tassa kammassa pharusassa,",
"pv42:9.2": "vipāko kaṭuko ahu;",
"pv42:9.3": "Yaṃ rājaputto vedesi,",
"pv42:9.4": "nirayamhi samappito.",
"pv42:10.1": "Chaḷeva caturāsīti,",
"pv42:10.2": "vassāni navutāni ca;",
"pv42:10.3": "Bhusaṃ dukkhaṃ nigacchittho,",
"pv42:10.4": "niraye katakibbiso.",
"pv42:11.1": "Uttānopi ca paccittha,",
"pv42:11.2": "nikujjo vāmadakkhiṇo;",
"pv42:11.3": "Uddhampādo ṭhito ceva,",
"pv42:11.4": "ciraṃ bālo apaccatha.",
"pv42:12.1": "Bahūni vassasahassāni,",
"pv42:12.2": "pūgāni nahutāni ca;",
"pv42:12.3": "Bhusaṃ dukkhaṃ nigacchittho,",
"pv42:12.4": "niraye katakibbiso.",
"pv42:13.1": "Etādisaṃ kho kaṭukaṃ,",
"pv42:13.2": "appaduṭṭhappadosinaṃ;",
"pv42:13.3": "Paccanti pāpakammantā,",
"pv42:13.4": "isimāsajja subbataṃ.",
"pv42:14.1": "So tattha bahuvassāni,",
"pv42:14.2": "vedayitvā bahuṃ dukhaṃ;",
"pv42:14.3": "Khuppipāsahato nāma,",
"pv42:14.4": "peto āsi tato cuto.",
"pv42:15.1": "Etamādīnavaṃ ñatvā,",
"pv42:15.2": "issaramadasambhavaṃ;",
"pv42:15.3": "Pahāya issaramadaṃ,",
"pv42:15.4": "nivātamanuvattaye.",
"pv42:16.1": "Diṭṭheva dhamme pāsaṃso,",
"pv42:16.2": "yo buddhesu sagāravo;",
"pv42:16.3": "Kāyassa bhedā sappañño,",
"pv42:16.4": "saggaṃ so upapajjatīti.",
"pv42:17.1": "Rājaputtapetavatthu sattamaṃ."
}