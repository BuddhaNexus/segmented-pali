{
"pv41:1.1": "Petavatthu",
"pv41:2.1": "Mahāvagga",
"pv41:3.1": "6. Kumārapetavatthu",
"pv41:4.1": "“Sāvatthi nāma nagaraṃ,",
"pv41:4.2": "himavantassa passato;",
"pv41:4.3": "Tattha āsuṃ dve kumārā,",
"pv41:4.4": "rājaputtāti me sutaṃ.",
"pv41:5.1": "Sammattā rajanīyesu,",
"pv41:5.2": "kāmassādābhinandino;",
"pv41:5.3": "Paccuppannasukhe giddhā,",
"pv41:5.4": "na te passiṃsunāgataṃ.",
"pv41:6.1": "Te cutā ca manussattā,",
"pv41:6.2": "paralokaṃ ito gatā;",
"pv41:6.3": "Tedha ghosentyadissantā,",
"pv41:6.4": "pubbe dukkaṭamattano.",
"pv41:7.1": "Bahūsu vata santesu,",
"pv41:7.2": "deyyadhamme upaṭṭhite;",
"pv41:7.3": "Nāsakkhimhā ca attānaṃ,",
"pv41:7.4": "parittaṃ kātuṃ sukhāvahaṃ.",
"pv41:8.1": "Kiṃ tato pāpakaṃ assa,",
"pv41:8.2": "yaṃ no rājakulā cutā;",
"pv41:8.3": "Upapannā pettivisayaṃ,",
"pv41:8.4": "khuppipāsasamappitā.",
"pv41:9.1": "Sāmino idha hutvāna,",
"pv41:9.2": "honti asāmino tahiṃ;",
"pv41:9.3": "Bhamanti khuppipāsāya,",
"pv41:9.4": "manussā unnatonatā.",
"pv41:10.1": "Etamādīnavaṃ ñatvā,",
"pv41:10.2": "issaramadasambhavaṃ;",
"pv41:10.3": "Pahāya issaramadaṃ,",
"pv41:10.4": "bhave saggagato naro;",
"pv41:10.5": "Kāyassa bhedā sappañño,",
"pv41:10.6": "saggaṃ so upapajjatī”ti.",
"pv41:11.1": "Kumārapetavatthu chaṭṭhaṃ."
}