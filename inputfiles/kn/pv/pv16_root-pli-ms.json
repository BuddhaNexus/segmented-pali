{
"pv16:1.1": "Petavatthu",
"pv16:2.1": "Ubbarivagga",
"pv16:3.1": "4. Nandāpetivatthu",
"pv16:4.1": "“Kāḷī dubbaṇṇarūpāsi,",
"pv16:4.2": "pharusā bhīrudassanā;",
"pv16:4.3": "Piṅgalāsi kaḷārāsi,",
"pv16:4.4": "na taṃ maññāmi mānusin”ti.",
"pv16:5.1": "“Ahaṃ nandā nandisena,",
"pv16:5.2": "bhariyā te pure ahuṃ;",
"pv16:5.3": "Pāpakammaṃ karitvāna,",
"pv16:5.4": "petalokaṃ ito gatā”ti.",
"pv16:6.1": "“Kiṃ nu kāyena vācāya,",
"pv16:6.2": "manasā dukkaṭaṃ kataṃ;",
"pv16:6.3": "Kissa kammavipākena,",
"pv16:6.4": "petalokaṃ ito gatā”ti.",
"pv16:7.1": "“Caṇḍī ca pharusā cāsiṃ,",
"pv16:7.2": "tayi cāpi agāravā;",
"pv16:7.3": "Tāhaṃ duruttaṃ vatvāna,",
"pv16:7.4": "petalokaṃ ito gatā”ti.",
"pv16:8.1": "“Handuttarīyaṃ dadāmi te,",
"pv16:8.2": "imaṃ dussaṃ nivāsaya;",
"pv16:8.3": "Imaṃ dussaṃ nivāsetvā,",
"pv16:8.4": "ehi nessāmi taṃ gharaṃ.",
"pv16:9.1": "Vatthañca annapānañca,",
"pv16:9.2": "lacchasi tvaṃ gharaṃ gatā;",
"pv16:9.3": "Putte ca te passissasi,",
"pv16:9.4": "suṇisāyo ca dakkhasī”ti.",
"pv16:10.1": "“Hatthena hatthe te dinnaṃ,",
"pv16:10.2": "na mayhaṃ upakappati;",
"pv16:10.3": "Bhikkhū ca sīlasampanne,",
"pv16:10.4": "vītarāge bahussute.",
"pv16:11.1": "Tappehi annapānena,",
"pv16:11.2": "mama dakkhiṇamādisa;",
"pv16:11.3": "Tadāhaṃ sukhitā hessaṃ,",
"pv16:11.4": "sabbakāmasamiddhinī”ti.",
"pv16:12.1": "Sādhūti so paṭissutvā,",
"pv16:12.2": "dānaṃ vipulamākiri;",
"pv16:12.3": "Annaṃ pānaṃ khādanīyaṃ,",
"pv16:12.4": "vatthasenāsanāni ca;",
"pv16:12.5": "Chattaṃ gandhañca mālañca,",
"pv16:12.6": "vividhā ca upāhanā.",
"pv16:13.1": "Bhikkhū ca sīlasampanne,",
"pv16:13.2": "vītarāge bahussute;",
"pv16:13.3": "Tappetvā annapānena,",
"pv16:13.4": "tassā dakkhiṇamādisī.",
"pv16:14.1": "Samanantarānuddiṭṭhe,",
"pv16:14.2": "vipāko udapajjatha;",
"pv16:14.3": "Bhojanacchādanapānīyaṃ,",
"pv16:14.4": "dakkhiṇāya idaṃ phalaṃ.",
"pv16:15.1": "Tato suddhā sucivasanā,",
"pv16:15.2": "kāsikuttamadhārinī;",
"pv16:15.3": "Vicittavatthābharaṇā,",
"pv16:15.4": "sāmikaṃ upasaṅkami.",
"pv16:16.1": "“Abhikkantena vaṇṇena,",
"pv16:16.2": "yā tvaṃ tiṭṭhasi devate;",
"pv16:16.3": "Obhāsentī disā sabbā,",
"pv16:16.4": "osadhī viya tārakā.",
"pv16:17.1": "Kena tetādiso vaṇṇo,",
"pv16:17.2": "kena te idha mijjhati;",
"pv16:17.3": "Uppajjanti ca te bhogā,",
"pv16:17.4": "ye keci manaso piyā.",
"pv16:18.1": "Pucchāmi taṃ devi mahānubhāve,",
"pv16:18.2": "Manussabhūtā kimakāsi puññaṃ;",
"pv16:18.3": "Kenāsi evaṃ jalitānubhāvā,",
"pv16:18.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
"pv16:19.1": "“Ahaṃ nandā nandisena,",
"pv16:19.2": "bhariyā te pure ahuṃ;",
"pv16:19.3": "Pāpakammaṃ karitvāna,",
"pv16:19.4": "petalokaṃ ito gatā.",
"pv16:20.1": "Tava dinnena dānena,",
"pv16:20.2": "modāmi akutobhayā;",
"pv16:20.3": "Ciraṃ jīva gahapati,",
"pv16:20.4": "saha sabbehi ñātibhi;",
"pv16:20.5": "Asokaṃ virajaṃ khemaṃ,",
"pv16:20.6": "āvāsaṃ vasavattinaṃ.",
"pv16:21.1": "Idha dhammaṃ caritvāna,",
"pv16:21.2": "Dānaṃ datvā gahapati;",
"pv16:21.3": "Vineyya maccheramalaṃ samūlaṃ,",
"pv16:21.4": "Anindito saggamupehi ṭhānan”ti.",
"pv16:22.1": "Nandāpetivatthu catutthaṃ."
}