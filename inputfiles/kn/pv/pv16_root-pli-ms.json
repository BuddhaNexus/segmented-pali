{
  "pv16:0.1": "Petavatthu ",
  "pv16:0.2": "Ubbarivagga ",
  "pv16:0.3": "4. Nandāpetivatthu ",
  "pv16:1.1": "“Kāḷī dubbaṇṇarūpāsi, ",
  "pv16:1.2": "pharusā bhīrudassanā; ",
  "pv16:1.3": "Piṅgalāsi kaḷārāsi, ",
  "pv16:1.4": "na taṁ maññāmi mānusin”ti. ",
  "pv16:2.1": "“Ahaṁ nandā nandisena, ",
  "pv16:2.2": "bhariyā te pure ahuṁ; ",
  "pv16:2.3": "Pāpakammaṁ karitvāna, ",
  "pv16:2.4": "petalokaṁ ito gatā”ti. ",
  "pv16:3.1": "“Kiṁ nu kāyena vācāya, ",
  "pv16:3.2": "manasā dukkaṭaṁ kataṁ; ",
  "pv16:3.3": "Kissa kammavipākena, ",
  "pv16:3.4": "petalokaṁ ito gatā”ti. ",
  "pv16:4.1": "“Caṇḍī ca pharusā cāsiṁ, ",
  "pv16:4.2": "tayi cāpi agāravā; ",
  "pv16:4.3": "Tāhaṁ duruttaṁ vatvāna, ",
  "pv16:4.4": "petalokaṁ ito gatā”ti. ",
  "pv16:5.1": "“Handuttarīyaṁ dadāmi te, ",
  "pv16:5.2": "imaṁ dussaṁ nivāsaya; ",
  "pv16:5.3": "Imaṁ dussaṁ nivāsetvā, ",
  "pv16:5.4": "ehi nessāmi taṁ gharaṁ. ",
  "pv16:6.1": "Vatthañca annapānañca, ",
  "pv16:6.2": "lacchasi tvaṁ gharaṁ gatā; ",
  "pv16:6.3": "Putte ca te passissasi, ",
  "pv16:6.4": "suṇisāyo ca dakkhasī”ti. ",
  "pv16:7.1": "“Hatthena hatthe te dinnaṁ, ",
  "pv16:7.2": "na mayhaṁ upakappati; ",
  "pv16:7.3": "Bhikkhū ca sīlasampanne, ",
  "pv16:7.4": "vītarāge bahussute. ",
  "pv16:8.1": "Tappehi annapānena, ",
  "pv16:8.2": "mama dakkhiṇamādisa; ",
  "pv16:8.3": "Tadāhaṁ sukhitā hessaṁ, ",
  "pv16:8.4": "sabbakāmasamiddhinī”ti. ",
  "pv16:9.1": "Sādhūti so paṭissutvā, ",
  "pv16:9.2": "dānaṁ vipulamākiri; ",
  "pv16:9.3": "Annaṁ pānaṁ khādanīyaṁ, ",
  "pv16:9.4": "vatthasenāsanāni ca; ",
  "pv16:9.5": "Chattaṁ gandhañca mālañca, ",
  "pv16:9.6": "vividhā ca upāhanā. ",
  "pv16:10.1": "Bhikkhū ca sīlasampanne, ",
  "pv16:10.2": "vītarāge bahussute; ",
  "pv16:10.3": "Tappetvā annapānena, ",
  "pv16:10.4": "tassā dakkhiṇamādisī. ",
  "pv16:11.1": "Samanantarānuddiṭṭhe, ",
  "pv16:11.2": "vipāko udapajjatha; ",
  "pv16:11.3": "Bhojanacchādanapānīyaṁ, ",
  "pv16:11.4": "dakkhiṇāya idaṁ phalaṁ. ",
  "pv16:12.1": "Tato suddhā sucivasanā, ",
  "pv16:12.2": "kāsikuttamadhārinī; ",
  "pv16:12.3": "Vicittavatthābharaṇā, ",
  "pv16:12.4": "sāmikaṁ upasaṅkami. ",
  "pv16:13.1": "“Abhikkantena vaṇṇena, ",
  "pv16:13.2": "yā tvaṁ tiṭṭhasi devate; ",
  "pv16:13.3": "Obhāsentī disā sabbā, ",
  "pv16:13.4": "osadhī viya tārakā. ",
  "pv16:14.1": "Kena tetādiso vaṇṇo, ",
  "pv16:14.2": "kena te idha mijjhati; ",
  "pv16:14.3": "Uppajjanti ca te bhogā, ",
  "pv16:14.4": "ye keci manaso piyā. ",
  "pv16:15.1": "Pucchāmi taṁ devi mahānubhāve, ",
  "pv16:15.2": "Manussabhūtā kimakāsi puññaṁ; ",
  "pv16:15.3": "Kenāsi evaṁ jalitānubhāvā, ",
  "pv16:15.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti. ",
  "pv16:16.1": "“Ahaṁ nandā nandisena, ",
  "pv16:16.2": "bhariyā te pure ahuṁ; ",
  "pv16:16.3": "Pāpakammaṁ karitvāna, ",
  "pv16:16.4": "petalokaṁ ito gatā. ",
  "pv16:17.1": "Tava dinnena dānena, ",
  "pv16:17.2": "modāmi akutobhayā; ",
  "pv16:17.3": "Ciraṁ jīva gahapati, ",
  "pv16:17.4": "saha sabbehi ñātibhi; ",
  "pv16:17.5": "Asokaṁ virajaṁ khemaṁ, ",
  "pv16:17.6": "āvāsaṁ vasavattinaṁ. ",
  "pv16:18.1": "Idha dhammaṁ caritvāna, ",
  "pv16:18.2": "Dānaṁ datvā gahapati; ",
  "pv16:18.3": "Vineyya maccheramalaṁ samūlaṁ, ",
  "pv16:18.4": "Anindito saggamupehi ṭhānan”ti. ",
  "pv16:19.1": "Nandāpetivatthu catutthaṁ. "
}