{
"pv46:1.1": "Petavatthu",
"pv46:2.1": "Mahāvagga",
"pv46:3.1": "11. Pāṭaliputtapetavatthu",
"pv46:4.1": "“Diṭṭhā tayā nirayā tiracchānayoni,",
"pv46:4.2": "Petā asurā athavāpi mānusā devā;",
"pv46:4.3": "Sayamaddasa kammavipākamattano,",
"pv46:4.4": "Nessāmi taṃ pāṭaliputtamakkhataṃ;",
"pv46:4.5": "Tattha gantvā kusalaṃ karohi kammaṃ”.",
"pv46:5.1": "“Atthakāmosi me yakkha,",
"pv46:5.2": "hitakāmosi devate;",
"pv46:5.3": "Karomi tuyhaṃ vacanaṃ,",
"pv46:5.4": "tvaṃsi ācariyo mama.",
"pv46:6.1": "Diṭṭhā mayā nirayā tiracchānayoni,",
"pv46:6.2": "Petā asurā athavāpi mānusā devā;",
"pv46:6.3": "Sayamaddasaṃ kammavipākamattano,",
"pv46:6.4": "Kāhāmi puññāni anappakānī”ti.",
"pv46:7.1": "Pāṭaliputtapetavatthu ekādasamaṃ."
}