{
"pv51:1.1": "Petavatthu",
"pv51:2.1": "Mahāvagga",
"pv51:3.1": "16. Saṭṭhikūṭapetavatthu",
"pv51:4.1": "“Kiṃ nu ummattarūpova,",
"pv51:4.2": "Migo bhantova dhāvasi;",
"pv51:4.3": "Nissaṃsayaṃ pāpakammanto,",
"pv51:4.4": "Kiṃ nu saddāyase tuvan”ti.",
"pv51:5.1": "“Ahaṃ bhadante petomhi,",
"pv51:5.2": "duggato yamalokiko;",
"pv51:5.3": "Pāpakammaṃ karitvāna,",
"pv51:5.4": "petalokaṃ ito gato.",
"pv51:6.1": "Saṭṭhi kūṭasahassāni,",
"pv51:6.2": "paripuṇṇāni sabbaso;",
"pv51:6.3": "Sīse mayhaṃ nipatanti,",
"pv51:6.4": "te bhindanti ca matthakan”ti.",
"pv51:7.1": "“Kiṃ nu kāyena vācāya,",
"pv51:7.2": "manasā dukkaṭaṃ kataṃ;",
"pv51:7.3": "Kissa kammavipākena,",
"pv51:7.4": "idaṃ dukkhaṃ nigacchasi.",
"pv51:8.1": "Saṭṭhi kūṭasahassāni,",
"pv51:8.2": "paripuṇṇāni sabbaso;",
"pv51:8.3": "Sīse tuyhaṃ nipatanti,",
"pv51:8.4": "te bhindanti ca matthakan”ti.",
"pv51:9.1": "“Athaddasāsiṃ sambuddhaṃ,",
"pv51:9.2": "sunettaṃ bhāvitindriyaṃ;",
"pv51:9.3": "Nisinnaṃ rukkhamūlasmiṃ,",
"pv51:9.4": "jhāyantaṃ akutobhayaṃ.",
"pv51:10.1": "Sālittakappahārena,",
"pv51:10.2": "bhindissaṃ tassa matthakaṃ;",
"pv51:10.3": "Tassa kammavipākena,",
"pv51:10.4": "idaṃ dukkhaṃ nigacchisaṃ.",
"pv51:11.1": "Saṭṭhi kūṭasahassāni,",
"pv51:11.2": "Paripuṇṇāni sabbaso;",
"pv51:11.3": "Sīse mayhaṃ nipatanti,",
"pv51:11.4": "Te bhindanti ca matthakan”ti.",
"pv51:12.1": "“Dhammena te kāpurisa,",
"pv51:12.2": "saṭṭhikūṭasahassāni;",
"pv51:12.3": "Paripuṇṇāni sabbaso,",
"pv51:12.4": "sīse tuyhaṃ nipatanti;",
"pv51:12.5": "Te bhindanti ca matthakan”ti.",
"pv51:13.1": "Saṭṭhikūṭapetavatthu soḷasamaṃ.",
"pv51:14.1": "Mahāvaggo catuttho.",
"pv51:15.1": "Tassuddānaṃ",
"pv51:16.1": "Ambasakkaro serīsako,",
"pv51:16.2": "piṅgalo revati ucchu;",
"pv51:16.3": "Dve kumārā duve gūthā,",
"pv51:16.4": "gaṇapāṭaliambavanaṃ.",
"pv51:17.1": "Akkharukkhabhogasaṃharā,",
"pv51:17.2": "seṭṭhiputtasaṭṭhikūṭā;",
"pv51:17.3": "Iti soḷasavatthūni,",
"pv51:17.4": "vaggo tena pavuccati.",
"pv51:18.1": "Atha vagguddānaṃ",
"pv51:19.1": "Urago uparivaggo,",
"pv51:19.2": "cūḷamahāti catudhā;",
"pv51:19.3": "Vatthūni ekapaññāsaṃ,",
"pv51:19.4": "catudhā bhāṇavārato.",
"pv51:20.1": "Petavatthupāḷi niṭṭhitā."
}