{
"pv47:1.1": "Petavatthu",
"pv47:2.1": "Mahāvagga",
"pv47:3.1": "12. Ambavanapetavatthu",
"pv47:4.1": "“Ayañca te pokkharaṇī surammā,",
"pv47:4.2": "Samā sutitthā ca mahodakā ca;",
"pv47:4.3": "Supupphitā bhamaragaṇānukiṇṇā,",
"pv47:4.4": "Kathaṃ tayā laddhā ayaṃ manuññā.",
"pv47:5.1": "Idañca te ambavanaṃ surammaṃ,",
"pv47:5.2": "Sabbotukaṃ dhārayate phalāni;",
"pv47:5.3": "Supupphitaṃ bhamaragaṇānukiṇṇaṃ,",
"pv47:5.4": "Kathaṃ tayā laddhamidaṃ vimānaṃ”.",
"pv47:6.1": "“Ambapakkaṃ dakaṃ yāgu,",
"pv47:6.2": "sītacchāyā manoramā;",
"pv47:6.3": "Dhītāya dinnadānena,",
"pv47:6.4": "tena me idha labbhati”.",
"pv47:7.1": "“Sandiṭṭhikaṃ kammaṃ evaṃ passatha,",
"pv47:7.2": "Dānassa damassa saṃyamassa vipākaṃ;",
"pv47:7.3": "Dāsī ahaṃ ayyakulesu hutvā,",
"pv47:7.4": "Suṇisā homi agārassa issarā”ti.",
"pv47:8.1": "Ambavanapetavatthu dvādasamaṃ."
}