{
"pv1:1.1": "Petavatthu",
"pv1:2.1": "Uragavagga",
"pv1:3.1": "1. Khettūpamapetavatthu",
"pv1:4.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
"pv1:5.1": "“Khettūpamā arahanto,",
"pv1:5.2": "dāyakā kassakūpamā;",
"pv1:5.3": "Bījūpamaṃ deyyadhammaṃ,",
"pv1:5.4": "etto nibbattate phalaṃ.",
"pv1:6.1": "Etaṃ bījaṃ kasi khettaṃ,",
"pv1:6.2": "petānaṃ dāyakassa ca;",
"pv1:6.3": "Taṃ petā paribhuñjanti,",
"pv1:6.4": "dātā puññena vaḍḍhati.",
"pv1:7.1": "Idheva kusalaṃ katvā,",
"pv1:7.2": "Pete ca paṭipūjiya;",
"pv1:7.3": "Saggañca kamatiṭṭhānaṃ,",
"pv1:7.4": "Kammaṃ katvāna bhaddakan”ti.",
"pv1:8.1": "Khettūpamapetavatthu paṭhamaṃ."
}