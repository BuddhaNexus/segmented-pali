{
"pv30:1.1": "Petavatthu",
"pv30:2.1": "Cūḷavagga",
"pv30:3.1": "5. Kumārapetavatthu",
"pv30:4.1": "Accherarūpaṃ sugatassa ñāṇaṃ,",
"pv30:4.2": "Satthā yathā puggalaṃ byākāsi;",
"pv30:4.3": "Ussannapuññāpi bhavanti heke,",
"pv30:4.4": "Parittapuññāpi bhavanti heke.",
"pv30:5.1": "Ayaṃ kumāro sīvathikāya chaḍḍito,",
"pv30:5.2": "Aṅguṭṭhasnehena yāpeti rattiṃ;",
"pv30:5.3": "Na yakkhabhūtā na sarīsapā vā,",
"pv30:5.4": "Viheṭhayeyyuṃ katapuññaṃ kumāraṃ.",
"pv30:6.1": "Sunakhāpimassa palihiṃsu pāde,",
"pv30:6.2": "Dhaṅkā siṅgālā parivattayanti;",
"pv30:6.3": "Gabbhāsayaṃ pakkhigaṇā haranti,",
"pv30:6.4": "Kākā pana akkhimalaṃ haranti.",
"pv30:7.1": "Nayimassa rakkhaṃ vidahiṃsu keci,",
"pv30:7.2": "Na osadhaṃ sāsapadhūpanaṃ vā;",
"pv30:7.3": "Nakkhattayogampi na aggahesuṃ,",
"pv30:7.4": "Na sabbadhaññānipi ākiriṃsu.",
"pv30:8.1": "Etādisaṃ uttamakicchapattaṃ,",
"pv30:8.2": "Rattābhataṃ sīvathikāya chaḍḍitaṃ;",
"pv30:8.3": "Nonītapiṇḍaṃva pavedhamānaṃ,",
"pv30:8.4": "Sasaṃsayaṃ jīvitasāvasesaṃ.",
"pv30:9.1": "Tamaddasā devamanussapūjito,",
"pv30:9.2": "Disvā ca taṃ byākari bhūripañño;",
"pv30:9.3": "“Ayaṃ kumāro nagarassimassa,",
"pv30:9.4": "Aggakuliko bhavissati bhogato ca”.",
"pv30:10.1": "“Kissa vataṃ kiṃ pana brahmacariyaṃ,",
"pv30:10.2": "Kissa suciṇṇassa ayaṃ vipāko;",
"pv30:10.3": "Etādisaṃ byasanaṃ pāpuṇitvā,",
"pv30:10.4": "Taṃ tādisaṃ paccanubhossatiddhin”ti.",
"pv30:11.1": "Buddhapamukhassa bhikkhusaṃghassa,",
"pv30:11.2": "Pūjaṃ akāsi janatā uḷāraṃ;",
"pv30:11.3": "Tatrassa cittassahu aññathattaṃ,",
"pv30:11.4": "Vācaṃ abhāsi pharusaṃ asabbhaṃ.",
"pv30:12.1": "So taṃ vitakkaṃ pavinodayitvā,",
"pv30:12.2": "Pītiṃ pasādaṃ paṭiladdhā pacchā;",
"pv30:12.3": "Tathāgataṃ jetavane vasantaṃ,",
"pv30:12.4": "Yāguyā upaṭṭhāsi sattarattaṃ.",
"pv30:13.1": "Tassa vataṃ taṃ pana brahmacariyaṃ,",
"pv30:13.2": "Tassa suciṇṇassa ayaṃ vipāko;",
"pv30:13.3": "Etādisaṃ byasanaṃ pāpuṇitvā,",
"pv30:13.4": "Taṃ tādisaṃ paccanubhossatiddhiṃ.",
"pv30:14.1": "Ṭhatvāna so vassasataṃ idheva,",
"pv30:14.2": "Sabbehi kāmehi samaṅgibhūto;",
"pv30:14.3": "Kāyassa bhedā abhisamparāyaṃ,",
"pv30:14.4": "Sahabyataṃ gacchati vāsavassāti.",
"pv30:15.1": "Kumārapetavatthu pañcamaṃ."
}