{
"pv3:1.1": "Petavatthu",
"pv3:2.1": "Uragavagga",
"pv3:3.1": "3. Pūtimukhapetavatthu",
"pv3:4.1": "“Dibbaṃ subhaṃ dhāresi vaṇṇadhātuṃ,",
"pv3:4.2": "Vehāyasaṃ tiṭṭhasi antalikkhe;",
"pv3:4.3": "Mukhañca te kimayo pūtigandhaṃ,",
"pv3:4.4": "Khādanti kiṃ kammamakāsi pubbe”.",
"pv3:5.1": "“Samaṇo ahaṃ pāpotiduṭṭhavāco,",
"pv3:5.2": "Tapassirūpo mukhasā asaññato;",
"pv3:5.3": "Laddhā ca me tapasā vaṇṇadhātu,",
"pv3:5.4": "Mukhañca me pesuṇiyena pūti.",
"pv3:6.1": "Tayidaṃ tayā nārada sāmaṃ diṭṭhaṃ,",
"pv3:6.2": "Anukampakā ye kusalā vadeyyuṃ;",
"pv3:6.3": "‘Mā pesuṇaṃ mā ca musā abhāṇi,",
"pv3:6.4": "Yakkho tuvaṃ hohisi kāmakāmī’”ti.",
"pv3:7.1": "Pūtimukhapetavatthu tatiyaṃ."
}