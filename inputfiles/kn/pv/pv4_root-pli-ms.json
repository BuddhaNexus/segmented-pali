{
"pv4:1.1": "Petavatthu",
"pv4:2.1": "Uragavagga",
"pv4:3.1": "4. Piṭṭhadhītalikapetavatthu",
"pv4:4.1": "“Yaṃ kiñcārammaṇaṃ katvā,",
"pv4:4.2": "dajjā dānaṃ amaccharī;",
"pv4:4.3": "Pubbapete ca ārabbha,",
"pv4:4.4": "atha vā vatthudevatā.",
"pv4:5.1": "Cattāro ca mahārāje,",
"pv4:5.2": "lokapāle yasassine;",
"pv4:5.3": "Kuveraṃ dhataraṭṭhañca,",
"pv4:5.4": "virūpakkhaṃ virūḷhakaṃ;",
"pv4:5.5": "Te ceva pūjitā honti,",
"pv4:5.6": "dāyakā ca anipphalā.",
"pv4:6.1": "Na hi ruṇṇaṃ vā soko vā,",
"pv4:6.2": "yā caññā paridevanā;",
"pv4:6.3": "Na taṃ petassa atthāya,",
"pv4:6.4": "evaṃ tiṭṭhanti ñātayo.",
"pv4:7.1": "Ayañca kho dakkhiṇā dinnā,",
"pv4:7.2": "saṃghamhi suppatiṭṭhitā;",
"pv4:7.3": "Dīgharattaṃ hitāyassa,",
"pv4:7.4": "ṭhānaso upakappatī”ti.",
"pv4:8.1": "Piṭṭhadhītalikapetavatthu catutthaṃ."
}