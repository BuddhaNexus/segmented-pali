{
"pv31:1.1": "Petavatthu",
"pv31:2.1": "Cūḷavagga",
"pv31:3.1": "6. Seriṇīpetivatthu",
"pv31:4.1": "“Naggā dubbaṇṇarūpāsi,",
"pv31:4.2": "kisā dhamanisanthatā;",
"pv31:4.3": "Upphāsulike kisike,",
"pv31:4.4": "kā nu tvaṃ idha tiṭṭhasī”ti.",
"pv31:5.1": "“Ahaṃ bhadante petīmhi,",
"pv31:5.2": "duggatā yamalokikā;",
"pv31:5.3": "Pāpakammaṃ karitvāna,",
"pv31:5.4": "petalokaṃ ito gatā”ti.",
"pv31:6.1": "“Kiṃ nu kāyena vācāya,",
"pv31:6.2": "manasā dukkaṭaṃ kataṃ;",
"pv31:6.3": "Kissa kammavipākena,",
"pv31:6.4": "petalokaṃ ito gatā”ti.",
"pv31:7.1": "“Anāvaṭesu titthesu,",
"pv31:7.2": "viciniṃ aḍḍhamāsakaṃ;",
"pv31:7.3": "Santesu deyyadhammesu,",
"pv31:7.4": "dīpaṃ nākāsimattano.",
"pv31:8.1": "Nadiṃ upemi tasitā,",
"pv31:8.2": "rittakā parivattati;",
"pv31:8.3": "Chāyaṃ upemi uṇhesu,",
"pv31:8.4": "ātapo parivattati.",
"pv31:9.1": "Aggivaṇṇo ca me vāto,",
"pv31:9.2": "ḍahanto upavāyati;",
"pv31:9.3": "Etañca bhante arahāmi,",
"pv31:9.4": "aññañca pāpakaṃ tato.",
"pv31:10.1": "Gantvāna hatthiniṃ puraṃ,",
"pv31:10.2": "vajjesi mayha mātaraṃ;",
"pv31:10.3": "‘Dhītā ca te mayā diṭṭhā,",
"pv31:10.4": "duggatā yamalokikā;",
"pv31:10.5": "Pāpakammaṃ karitvāna,",
"pv31:10.6": "petalokaṃ ito gatā’.",
"pv31:11.1": "Atthi me ettha nikkhittaṃ,",
"pv31:11.2": "anakkhātañca taṃ mayā;",
"pv31:11.3": "Cattārisatasahassāni,",
"pv31:11.4": "pallaṅkassa ca heṭṭhato.",
"pv31:12.1": "Tato me dānaṃ dadatu,",
"pv31:12.2": "tassā ca hotu jīvikā;",
"pv31:12.3": "Dānaṃ datvā ca me mātā,",
"pv31:12.4": "dakkhiṇaṃ anudicchatu;",
"pv31:12.5": "Tadāhaṃ sukhitā hessaṃ,",
"pv31:12.6": "sabbakāmasamiddhinī”ti.",
"pv31:13.1": "“Sādhū”ti so paṭissutvā,",
"pv31:13.2": "gantvāna hatthiniṃ puraṃ;",
"pv31:13.3": "Avoca tassā mātaraṃ—",
"pv31:14.1": "“Dhītā ca te mayā diṭṭhā,",
"pv31:14.2": "duggatā yamalokikā;",
"pv31:14.3": "Pāpakammaṃ karitvāna,",
"pv31:14.4": "petalokaṃ ito gatā.",
"pv31:15.1": "Sā maṃ tattha samādapesi, ()",
"pv31:15.2": "Vajjesi mayha mātaraṃ;",
"pv31:15.3": "‘Dhītā ca te mayā diṭṭhā,",
"pv31:15.4": "Duggatā yamalokikā;",
"pv31:15.5": "Pāpakammaṃ karitvāna,",
"pv31:15.6": "Petalokaṃ ito gatā.",
"pv31:16.1": "Atthi ca me ettha nikkhittaṃ,",
"pv31:16.2": "anakkhātañca taṃ mayā;",
"pv31:16.3": "Cattārisatasahassāni,",
"pv31:16.4": "pallaṅkassa ca heṭṭhato.",
"pv31:17.1": "Tato me dānaṃ dadatu,",
"pv31:17.2": "tassā ca hotu jīvikā;",
"pv31:17.3": "Dānaṃ datvā ca me mātā,",
"pv31:17.4": "dakkhiṇaṃ anudicchatu ();",
"pv31:17.5": "Tadāhaṃ sukhitā hessaṃ,",
"pv31:17.6": "sabbakāmasamiddhinī’”ti.",
"pv31:18.1": "Tato hi sā dānamadā,",
"pv31:18.2": "tassā dakkhiṇamādisī;",
"pv31:18.3": "Petī ca sukhitā āsi,",
"pv31:18.4": "tassā cāsi sujīvikāti.",
"pv31:19.1": "Seriṇīpetivatthu chaṭṭhaṃ."
}