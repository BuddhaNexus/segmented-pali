{
"ja467:1.1": "Jātaka",
"ja467:2.1": "Dvādasakanipāta",
"ja467:3.1": "Cūḷakuṇālavagga",
"ja467:4.1": "4. Kāmajātaka",
"ja467:5.1": "“Kāmaṃ kāmayamānassa,",
"ja467:5.2": "tassa ce taṃ samijjhati;",
"ja467:5.3": "Addhā pītimano hoti,",
"ja467:5.4": "laddhā macco yadicchati.",
"ja467:6.1": "Kāmaṃ kāmayamānassa,",
"ja467:6.2": "tassa ce taṃ samijjhati;",
"ja467:6.3": "Tato naṃ aparaṃ kāme,",
"ja467:6.4": "ghamme taṇhaṃva vindati.",
"ja467:7.1": "Gavaṃva siṅgino siṅgaṃ,",
"ja467:7.2": "vaḍḍhamānassa vaḍḍhati;",
"ja467:7.3": "Evaṃ mandassa posassa,",
"ja467:7.4": "bālassa avijānato;",
"ja467:7.5": "Bhiyyo taṇhā pipāsā ca,",
"ja467:7.6": "vaḍḍhamānassa vaḍḍhati.",
"ja467:8.1": "Pathabyā sāliyavakaṃ,",
"ja467:8.2": "gavāssaṃ dāsaporisaṃ;",
"ja467:8.3": "Datvā ca nālamekassa,",
"ja467:8.4": "iti vidvā samaṃ care.",
"ja467:9.1": "Rājā pasayha pathaviṃ vijitvā,",
"ja467:9.2": "Sasāgarantaṃ mahimāvasanto;",
"ja467:9.3": "Oraṃ samuddassa atittarūpo,",
"ja467:9.4": "Pāraṃ samuddassapi patthayetha.",
"ja467:10.1": "Yāva anussaraṃ kāme,",
"ja467:10.2": "Manasā titti nājjhagā;",
"ja467:10.3": "Tato nivattā paṭikkamma disvā,",
"ja467:10.4": "Te ve sutittā ye paññāya tittā.",
"ja467:11.1": "Paññāya tittinaṃ seṭṭhaṃ,",
"ja467:11.2": "na so kāmehi tappati;",
"ja467:11.3": "Paññāya tittaṃ purisaṃ,",
"ja467:11.4": "taṇhā na kurute vasaṃ.",
"ja467:12.1": "Apacinetheva kāmānaṃ,",
"ja467:12.2": "appicchassa alolupo;",
"ja467:12.3": "Samuddamatto puriso,",
"ja467:12.4": "na so kāmehi tappati.",
"ja467:13.1": "Rathakārova cammassa,",
"ja467:13.2": "parikantaṃ upāhanaṃ;",
"ja467:13.3": "Yaṃ yaṃ cajati kāmānaṃ,",
"ja467:13.4": "taṃ taṃ sampajjate sukhaṃ;",
"ja467:13.5": "Sabbañce sukhamiccheyya,",
"ja467:13.6": "sabbe kāme pariccaje”.",
"ja467:14.1": "“Aṭṭha te bhāsitā gāthā,",
"ja467:14.2": "sabbā honti sahassiyo;",
"ja467:14.3": "Paṭigaṇha mahābrahme,",
"ja467:14.4": "sādhetaṃ tava bhāsitaṃ”.",
"ja467:15.1": "“Na me attho sahassehi,",
"ja467:15.2": "satehi nahutehi vā;",
"ja467:15.3": "Pacchimaṃ bhāsato gāthaṃ,",
"ja467:15.4": "kāme me na rato mano”.",
"ja467:16.1": "“Bhadrako vatāyaṃ māṇavako,",
"ja467:16.2": "Sabbalokavidū muni;",
"ja467:16.3": "Yo imaṃ taṇhaṃ dukkhajananiṃ,",
"ja467:16.4": "Parijānāti paṇḍito”ti.",
"ja467:17.1": "Kāmajātakaṃ catutthaṃ."
}