{
"ja435:1.1": "Jātaka",
"ja435:2.1": "Navakanipāta",
"ja435:3.1": "Gijjhavagga",
"ja435:4.1": "9. Haliddirāgajātaka",
"ja435:5.1": "“Sutitikkhaṃ araññamhi,",
"ja435:5.2": "pantamhi sayanāsane;",
"ja435:5.3": "Ye ca gāme titikkhanti,",
"ja435:5.4": "te uḷāratarā tayā”.",
"ja435:6.1": "“Araññā gāmamāgamma,",
"ja435:6.2": "kiṃsīlaṃ kiṃvataṃ ahaṃ;",
"ja435:6.3": "Purisaṃ tāta seveyyaṃ,",
"ja435:6.4": "taṃ me akkhāhi pucchito”.",
"ja435:7.1": "“Yo te vissāsaye tāta,",
"ja435:7.2": "vissāsañca khameyya te;",
"ja435:7.3": "Sussūsī ca titikkhī ca,",
"ja435:7.4": "taṃ bhajehi ito gato.",
"ja435:8.1": "Yassa kāyena vācāya,",
"ja435:8.2": "manasā natthi dukkaṭaṃ;",
"ja435:8.3": "Urasīva patiṭṭhāya,",
"ja435:8.4": "taṃ bhajehi ito gato.",
"ja435:9.1": "Yo ca dhammena carati,",
"ja435:9.2": "carantopi na maññati;",
"ja435:9.3": "Visuddhakāriṃ sappaññaṃ,",
"ja435:9.4": "taṃ bhajehi ito gato.",
"ja435:10.1": "Haliddirāgaṃ kapicittaṃ,",
"ja435:10.2": "purisaṃ rāgavirāginaṃ;",
"ja435:10.3": "Tādisaṃ tāta mā sevi,",
"ja435:10.4": "nimmanussampi ce siyā.",
"ja435:11.1": "Āsīvisaṃva kupitaṃ,",
"ja435:11.2": "mīḷhalittaṃ mahāpathaṃ;",
"ja435:11.3": "Ārakā parivajjehi,",
"ja435:11.4": "yānīva visamaṃ pathaṃ.",
"ja435:12.1": "Anatthā tāta vaḍḍhanti,",
"ja435:12.2": "bālaṃ accupasevato;",
"ja435:12.3": "Māssu bālena saṃgacchi,",
"ja435:12.4": "amitteneva sabbadā.",
"ja435:13.1": "Taṃ tāhaṃ tāta yācāmi,",
"ja435:13.2": "karassu vacanaṃ mama;",
"ja435:13.3": "Māssu bālena saṃgacchi,",
"ja435:13.4": "dukkho bālehi saṅgamo”ti.",
"ja435:14.1": "Haliddirāgajātakaṃ navamaṃ."
}