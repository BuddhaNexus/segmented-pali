{
"ja434:1.1": "Jātaka",
"ja434:2.1": "Navakanipāta",
"ja434:3.1": "Gijjhavagga",
"ja434:4.1": "8. Cakkavākajātaka",
"ja434:5.1": "“Kāsāyavatthe sakuṇe vadāmi,",
"ja434:5.2": "Duve duve nandamane carante;",
"ja434:5.3": "Kaṃ aṇḍajaṃ aṇḍajā mānusesu,",
"ja434:5.4": "Jātiṃ pasaṃsanti tadiṅgha brūtha”.",
"ja434:6.1": "“Amhe manussesu manussahiṃsa,",
"ja434:6.2": "Anubbate cakkavāke vadanti;",
"ja434:6.3": "Kalyāṇabhāvamhe dijesu sammatā,",
"ja434:6.4": "Abhirūpā vicarāma aṇṇave”.",
"ja434:6.5": "()",
"ja434:7.1": "“Kiṃ aṇṇave kāni phalāni bhuñje,",
"ja434:7.2": "Maṃsaṃ kuto khādatha cakkavākā;",
"ja434:7.3": "Kiṃ bhojanaṃ bhuñjatha vo anomā,",
"ja434:7.4": "Balañca vaṇṇo ca anapparūpā”.",
"ja434:8.1": "“Na aṇṇave santi phalāni dhaṅka,",
"ja434:8.2": "Maṃsaṃ kuto khādituṃ cakkavāke;",
"ja434:8.3": "Sevālabhakkhamha apāṇabhojanā,",
"ja434:8.4": "Na ghāsahetūpi karoma pāpaṃ”.",
"ja434:9.1": "“Na me idaṃ ruccati cakkavāka,",
"ja434:9.2": "Asmiṃ bhave bhojanasannikāso;",
"ja434:9.3": "Ahosi pubbe tato me aññathā,",
"ja434:9.4": "Icceva me vimati ettha jātā.",
"ja434:10.1": "Ahampi maṃsāni phalāni bhuñje,",
"ja434:10.2": "Annāni ca loṇiyateliyāni;",
"ja434:10.3": "Rasaṃ manussesu labhāmi bhottuṃ,",
"ja434:10.4": "Sūrova saṅgāmamukhaṃ vijetvā;",
"ja434:10.5": "Na ca me tādiso vaṇṇo,",
"ja434:10.6": "Cakkavāka yathā tava”.",
"ja434:11.1": "“Asuddhabhakkhosi khaṇānupātī,",
"ja434:11.2": "Kicchena te labbhati annapānaṃ;",
"ja434:11.3": "Na tussasī rukkhaphalehi dhaṅka,",
"ja434:11.4": "Maṃsāni vā yāni susānamajjhe.",
"ja434:12.1": "Yo sāhasena adhigamma bhoge,",
"ja434:12.2": "Paribhuñjati dhaṅka khaṇānupātī;",
"ja434:12.3": "Tato upakkosati naṃ sabhāvo,",
"ja434:12.4": "Upakkuṭṭho vaṇṇabalaṃ jahāti.",
"ja434:13.1": "Appampi ce nibbutiṃ bhuñjatī yadi,",
"ja434:13.2": "Asāhasena aparūpaghātī;",
"ja434:13.3": "Balañca vaṇṇo ca tadassa hoti,",
"ja434:13.4": "Na hi sabbo āhāramayena vaṇṇo”ti.",
"ja434:14.1": "Cakkavākajātakaṃ aṭṭhamaṃ."
}