{
"ja518:1.1": "Jātaka",
"ja518:2.1": "Tiṃsanipāta",
"ja518:3.1": "Kiṃchandavagga",
"ja518:4.1": "8. Paṇḍaranāgarājajātaka",
"ja518:5.1": "“Vikiṇṇavācaṃ aniguyha mantaṃ,",
"ja518:5.2": "Asaññataṃ aparicakkhitāraṃ;",
"ja518:5.3": "Bhayaṃ tamanveti sayaṃ abodhaṃ,",
"ja518:5.4": "Nāgaṃ yathā paṇḍarakaṃ supaṇṇo.",
"ja518:6.1": "Yo guyhamantaṃ parirakkhaṇeyyaṃ,",
"ja518:6.2": "Mohā naro saṃsati hāsamāno;",
"ja518:6.3": "Taṃ bhinnamantaṃ bhayamanveti khippaṃ,",
"ja518:6.4": "Nāgaṃ yathā paṇḍarakaṃ supaṇṇo.",
"ja518:7.1": "Nānumitto garuṃ atthaṃ,",
"ja518:7.2": "guyhaṃ veditumarahati;",
"ja518:7.3": "Sumitto ca asambuddhaṃ,",
"ja518:7.4": "sambuddhaṃ vā anatthavā.",
"ja518:8.1": "Vissāsamāpajjimahaṃ acelaṃ,",
"ja518:8.2": "Samaṇo ayaṃ sammato bhāvitatto;",
"ja518:8.3": "Tassāhamakkhiṃ vivariṃ guyhamatthaṃ,",
"ja518:8.4": "Atītamattho kapaṇaṃ rudāmi.",
"ja518:9.1": "Tassāhaṃ paramaṃ brahme guyhaṃ,",
"ja518:9.2": "Vācañhi maṃ nāsakkhiṃ saṃyametuṃ;",
"ja518:9.3": "Tappakkhato hi bhayamāgataṃ mamaṃ,",
"ja518:9.4": "Atītamattho kapaṇaṃ rudāmi.",
"ja518:10.1": "Yo ve naro suhadaṃ maññamāno,",
"ja518:10.2": "Guyhamatthaṃ saṃsati dukkulīne;",
"ja518:10.3": "Dosā bhayā athavā rāgarattā,",
"ja518:10.4": "Pallatthito bālo asaṃsayaṃ so.",
"ja518:11.1": "Tirokkhavāco asataṃ paviṭṭho,",
"ja518:11.2": "Yo saṅgatīsu mudīreti vākyaṃ;",
"ja518:11.3": "Āsīviso dummukhotyāhu taṃ naraṃ,",
"ja518:11.4": "Ārā ārā saṃyame tādisamhā.",
"ja518:12.1": "Annaṃ pānaṃ kāsikacandanañca,",
"ja518:12.2": "Manāpitthiyo mālamucchādanañca;",
"ja518:12.3": "Ohāya gacchāmase sabbakāme,",
"ja518:12.4": "Supaṇṇa pāṇūpagatāva tyamhā”.",
"ja518:13.1": "“Ko nīdha tiṇṇaṃ garahaṃ upeti,",
"ja518:13.2": "Asmiṃdhaloke pāṇabhū nāgarāja;",
"ja518:13.3": "Samaṇo supaṇṇo athavā tvameva,",
"ja518:13.4": "Kiṃ kāraṇā paṇḍarakaggahīto”.",
"ja518:14.1": "“Samaṇoti me sammatatto ahosi,",
"ja518:14.2": "Piyo ca me manasā bhāvitatto;",
"ja518:14.3": "Tassāhamakkhiṃ vivariṃ guyhamatthaṃ,",
"ja518:14.4": "Atītamattho kapaṇaṃ rudāmi”.",
"ja518:15.1": "“Na catthi satto amaro pathabyā,",
"ja518:15.2": "Paññāvidhā natthi na ninditabbā;",
"ja518:15.3": "Saccena dhammena dhitiyā damena,",
"ja518:15.4": "Alabbhamabyāharatī naro idha.",
"ja518:16.1": "Mātāpitā paramā bandhavānaṃ,",
"ja518:16.2": "Nāssa tatiyo anukampakatthi;",
"ja518:16.3": "Tesampi guyhaṃ paramaṃ na saṃse,",
"ja518:16.4": "Mantassa bhedaṃ parisaṅkamāno.",
"ja518:17.1": "Mātāpitā bhaginī bhātaro ca,",
"ja518:17.2": "Sahāyā vā yassa honti sapakkhā;",
"ja518:17.3": "Tesampi guyhaṃ paramaṃ na saṃse,",
"ja518:17.4": "Mantassa bhedaṃ parisaṅkamāno.",
"ja518:18.1": "Bhariyā ce purisaṃ vajjā,",
"ja518:18.2": "Komārī piyabhāṇinī;",
"ja518:18.3": "Puttarūpayasūpetā,",
"ja518:18.4": "Ñātisaṅghapurakkhatā;",
"ja518:18.5": "Tassāpi guyhaṃ paramaṃ na saṃse,",
"ja518:18.6": "Mantassa bhedaṃ parisaṅkamāno.",
"ja518:19.1": "Na guyhamatthaṃ vivareyya,",
"ja518:19.2": "Rakkheyya naṃ yathā nidhiṃ;",
"ja518:19.3": "Na hi pātukato sādhu,",
"ja518:19.4": "Guyho attho pajānatā.",
"ja518:20.1": "Thiyā guyhaṃ na saṃseyya,",
"ja518:20.2": "amittassa ca paṇḍito;",
"ja518:20.3": "Yo cāmisena saṃhīro,",
"ja518:20.4": "hadayattheno ca yo naro.",
"ja518:21.1": "Guyhamatthaṃ asambuddhaṃ,",
"ja518:21.2": "sambodhayati yo naro;",
"ja518:21.3": "Mantabhedabhayā tassa,",
"ja518:21.4": "dāsabhūto titikkhati.",
"ja518:22.1": "Yāvanto purisassatthaṃ,",
"ja518:22.2": "guyhaṃ jānanti mantinaṃ;",
"ja518:22.3": "Tāvanto tassa ubbegā,",
"ja518:22.4": "tasmā guyhaṃ na vissaje.",
"ja518:23.1": "Vivicca bhāseyya divā rahassaṃ,",
"ja518:23.2": "Rattiṃ giraṃ nātivelaṃ pamuñce;",
"ja518:23.3": "Upassutikā hi suṇanti mantaṃ,",
"ja518:23.4": "Tasmā manto khippamupeti bhedaṃ.",
"ja518:24.1": "Yathāpi assa nagaraṃ mahantaṃ,",
"ja518:24.2": "Advārakaṃ āyasaṃ bhaddasālaṃ;",
"ja518:24.3": "Samantakhātāparikhāupetaṃ,",
"ja518:24.4": "Evampi me te idha guyhamantā.",
"ja518:25.1": "Ye guyhamantā avikiṇṇavācā,",
"ja518:25.2": "Daḷhā sadatthesu narā dujivha;",
"ja518:25.3": "Ārā amittā byavajanti tehi,",
"ja518:25.4": "Āsīvisā vā riva sattusaṅghā”.",
"ja518:26.1": "“Hitvā gharaṃ pabbajito acelo,",
"ja518:26.2": "Naggo muṇḍo carati ghāsahetu;",
"ja518:26.3": "Tamhi nu kho vivariṃ guyhamatthaṃ,",
"ja518:26.4": "Atthā ca dhammā ca apaggatamhā.",
"ja518:27.1": "Kathaṃkaro hoti supaṇṇarāja,",
"ja518:27.2": "Kiṃsīlo kena vatena vattaṃ;",
"ja518:27.3": "Samaṇo caraṃ hitvā mamāyitāni,",
"ja518:27.4": "Kathaṃkaro saggamupeti ṭhānaṃ”.",
"ja518:28.1": "“Hiriyā titikkhāya damenupeto,",
"ja518:28.2": "Akkodhano pesuṇiyaṃ pahāya;",
"ja518:28.3": "Samaṇo caraṃ hitvā mamāyitāni,",
"ja518:28.4": "Evaṃkaro saggamupeti ṭhānaṃ”.",
"ja518:29.1": "“Mātāva puttaṃ taruṇaṃ tanujjaṃ,",
"ja518:29.2": "Samphassatā sabbagattaṃ phareti;",
"ja518:29.3": "Evampi me tvaṃ pāturahu dijinda,",
"ja518:29.4": "Mātāva puttaṃ anukampamāno”.",
"ja518:30.1": "“Handajja tvaṃ muñca vadhā dujivha,",
"ja518:30.2": "Tayo hi puttā na hi añño atthi;",
"ja518:30.3": "Antevāsī dinnako atrajo ca,",
"ja518:30.4": "Rajjassu puttaññataro me ahosi”.",
"ja518:31.1": "Icceva vākyaṃ visajjī supaṇṇo,",
"ja518:31.2": "Bhumyaṃ patiṭṭhāya dijo dujivhaṃ;",
"ja518:31.3": "“Muttajja tvaṃ sabbabhayātivatto,",
"ja518:31.4": "Thalūdake hohi mayābhigutto.",
"ja518:32.1": "Ātaṅkinaṃ yathā kusalo bhisakko,",
"ja518:32.2": "Pipāsitānaṃ rahadova sīto;",
"ja518:32.3": "Vesmaṃ yathā himasītaṭṭitānaṃ,",
"ja518:32.4": "Evampi te saraṇamahaṃ bhavāmi”.",
"ja518:33.1": "“Sandhiṃ katvā amittena,",
"ja518:33.2": "aṇḍajena jalābuja;",
"ja518:33.3": "Vivariya dāṭhaṃ sesi,",
"ja518:33.4": "kuto taṃ bhayamāgataṃ”.",
"ja518:34.1": "“Saṅketheva amittasmiṃ,",
"ja518:34.2": "mittasmimpi na vissase;",
"ja518:34.3": "Abhayā bhayamuppannaṃ,",
"ja518:34.4": "api mūlāni kantati.",
"ja518:35.1": "Kathaṃ nu vissase tyamhi,",
"ja518:35.2": "yenāsi kalaho kato;",
"ja518:35.3": "Niccayattena ṭhātabbaṃ,",
"ja518:35.4": "so disabbhi na rajjati.",
"ja518:36.1": "Vissāsaye na ca taṃ vissayeyya,",
"ja518:36.2": "Asaṅkito saṅkito ca bhaveyya;",
"ja518:36.3": "Tathā tathā viññū parakkameyya,",
"ja518:36.4": "Yathā yathā bhāvaṃ paro na jaññā”.",
"ja518:37.1": "Te devavaṇṇā sukhumālarūpā,",
"ja518:37.2": "Ubho samā sujayā puññakhandhā;",
"ja518:37.3": "Upāgamuṃ karampiyaṃ acelaṃ,",
"ja518:37.4": "Missībhūtā assavāhāva nāgā.",
"ja518:38.1": "Tato have paṇḍarako acelaṃ,",
"ja518:38.2": "Sayamevupāgamma idaṃ avoca;",
"ja518:38.3": "“Muttajjahaṃ sabbabhayātivatto,",
"ja518:38.4": "Na hi nūna tuyhaṃ manaso piyamhā”.",
"ja518:39.1": "“Piyo hi me āsi supaṇṇarājā,",
"ja518:39.2": "Asaṃsayaṃ paṇḍarakena saccaṃ;",
"ja518:39.3": "So rāgarattova akāsimetaṃ,",
"ja518:39.4": "Pāpakammaṃ sampajāno na mohā”.",
"ja518:40.1": "“Na me piyaṃ appiyaṃ vāpi hoti,",
"ja518:40.2": "Sampassato lokamimaṃ parañca;",
"ja518:40.3": "Susaññatānañhi viyañjanena,",
"ja518:40.4": "Asaññato lokamimaṃ carāsi.",
"ja518:41.1": "Ariyāvakāsosi anariyovāsi,",
"ja518:41.2": "Asaññato saññatasannikāso;",
"ja518:41.3": "Kaṇhābhijātikosi anariyarūpo,",
"ja518:41.4": "Pāpaṃ bahuṃ duccaritaṃ acāri.",
"ja518:42.1": "Aduṭṭhassa tuvaṃ dubbhi,",
"ja518:42.2": "dubbhī ca pisuṇo casi;",
"ja518:42.3": "Etena saccavajjena,",
"ja518:42.4": "muddhā te phalatu sattadhā”.",
"ja518:43.1": "“Tasmā hi mittānaṃ na dubbhitabbaṃ,",
"ja518:43.2": "Mittadubbhā pāpiyo natthi añño;",
"ja518:43.3": "Āsittasatto nihato pathabyā,",
"ja518:43.4": "Indassa vākyena hi saṃvaro hato”ti.",
"ja518:44.1": "Paṇḍaranāgarājajātakaṃ aṭṭhamaṃ."
}