{
"ja489:1.1": "Jātaka",
"ja489:2.1": "Pakiṇṇakanipāta",
"ja489:3.1": "Sālikedāravagga",
"ja489:4.1": "6. Surucijātaka",
"ja489:5.1": "“Mahesī surucino bhariyā,",
"ja489:5.2": "Ānītā paṭhamaṃ ahaṃ;",
"ja489:5.3": "Dasa vassasahassāni,",
"ja489:5.4": "Yaṃ maṃ surucimānayi.",
"ja489:6.1": "Sāhaṃ brāhmaṇa rājānaṃ,",
"ja489:6.2": "vedehaṃ mithilaggahaṃ;",
"ja489:6.3": "Nābhijānāmi kāyena,",
"ja489:6.4": "vācāya uda cetasā;",
"ja489:6.5": "Suruciṃ atimaññittha,",
"ja489:6.6": "āvi vā yadi vā raho.",
"ja489:7.1": "Etena saccavajjena,",
"ja489:7.2": "putto uppajjataṃ ise;",
"ja489:7.3": "Musā me bhaṇamānāya,",
"ja489:7.4": "muddhā phalatu sattadhā. #1",
"ja489:8.1": "Bhattu mama sassu mātā,",
"ja489:8.2": "pitā cāpi ca sassuro;",
"ja489:8.3": "Te maṃ brahme vinetāro,",
"ja489:8.4": "yāva aṭṭhaṃsu jīvitaṃ.",
"ja489:9.1": "Sāhaṃ ahiṃsāratinī,",
"ja489:9.2": "kāmasā dhammacārinī;",
"ja489:9.3": "Sakkaccaṃ te upaṭṭhāsiṃ,",
"ja489:9.4": "rattindivamatanditā.",
"ja489:10.1": "Etena saccavajjena,",
"ja489:10.2": "putto uppajjataṃ ise;",
"ja489:10.3": "Musā me bhaṇamānāya,",
"ja489:10.4": "muddhā phalatu sattadhā. #2",
"ja489:11.1": "Soḷasitthisahassāni,",
"ja489:11.2": "sahabhariyāni brāhmaṇa;",
"ja489:11.3": "Tāsu issā vā kodho vā,",
"ja489:11.4": "nāhu mayhaṃ kudācanaṃ.",
"ja489:12.1": "Hitena tāsaṃ nandāmi,",
"ja489:12.2": "na ca me kāci appiyā;",
"ja489:12.3": "Attānaṃvānukampāmi,",
"ja489:12.4": "sadā sabbā sapattiyo.",
"ja489:13.1": "Etena saccavajjena,",
"ja489:13.2": "putto uppajjataṃ ise;",
"ja489:13.3": "Musā me bhaṇamānāya,",
"ja489:13.4": "muddhā phalatu sattadhā. #3",
"ja489:14.1": "Dāse kammakare pesse,",
"ja489:14.2": "ye caññe anujīvino;",
"ja489:14.3": "Pesemi sahadhammena,",
"ja489:14.4": "sadā pamuditindriyā.",
"ja489:15.1": "Etena saccavajjena,",
"ja489:15.2": "putto uppajjataṃ ise;",
"ja489:15.3": "Musā me bhaṇamānāya,",
"ja489:15.4": "muddhā phalatu sattadhā. #4",
"ja489:16.1": "Samaṇe brāhmaṇe cāpi,",
"ja489:16.2": "aññe cāpi vanibbake;",
"ja489:16.3": "Tappemi annapānena,",
"ja489:16.4": "sadā payatapāṇinī.",
"ja489:17.1": "Etena saccavajjena,",
"ja489:17.2": "putto uppajjataṃ ise;",
"ja489:17.3": "Musā me bhaṇamānāya,",
"ja489:17.4": "muddhā phalatu sattadhā. #5",
"ja489:18.1": "Cātuddasiṃ pañcaddasiṃ,",
"ja489:18.2": "Yā ca pakkhassa aṭṭhamī;",
"ja489:18.3": "Pāṭihāriyapakkhañca,",
"ja489:18.4": "Aṭṭhaṅgasusamāgataṃ;",
"ja489:18.5": "Uposathaṃ upavasāmi,",
"ja489:18.6": "Sadā sīlesu saṃvutā.",
"ja489:19.1": "Etena saccavajjena,",
"ja489:19.2": "putto uppajjataṃ ise;",
"ja489:19.3": "Musā me bhaṇamānāya,",
"ja489:19.4": "muddhā phalatu sattadhā”. #6",
"ja489:20.1": "“Sabbeva te dhammaguṇā,",
"ja489:20.2": "rājaputti yasassini;",
"ja489:20.3": "Saṃvijjanti tayi bhadde,",
"ja489:20.4": "ye tvaṃ kittesi attani.",
"ja489:21.1": "Khattiyo jātisampanno,",
"ja489:21.2": "abhijāto yasassimā;",
"ja489:21.3": "Dhammarājā videhānaṃ,",
"ja489:21.4": "putto uppajjate tava”.",
"ja489:22.1": "“Dummī rajojalladharo,",
"ja489:22.2": "aghe vehāyasaṃ ṭhito;",
"ja489:22.3": "Manuññaṃ bhāsase vācaṃ,",
"ja489:22.4": "yaṃ mayhaṃ hadayaṅgamaṃ.",
"ja489:23.1": "Devatānusi saggamhā,",
"ja489:23.2": "isi vāsi mahiddhiko;",
"ja489:23.3": "Ko vāsi tvaṃ anuppatto,",
"ja489:23.4": "attānaṃ me pavedaya”.",
"ja489:24.1": "“Yaṃ devasaṅghā vandanti,",
"ja489:24.2": "sudhammāyaṃ samāgatā;",
"ja489:24.3": "Sohaṃ sakko sahassakkho,",
"ja489:24.4": "āgatosmi tavantike.",
"ja489:25.1": "Itthiyo jīvalokasmiṃ,",
"ja489:25.2": "yā hoti samacārinī;",
"ja489:25.3": "Medhāvinī sīlavatī,",
"ja489:25.4": "sassudevā patibbatā.",
"ja489:26.1": "Tādisāya sumedhāya,",
"ja489:26.2": "sucikammāya nāriyā;",
"ja489:26.3": "Devā dassanamāyanti,",
"ja489:26.4": "mānusiyā amānusā.",
"ja489:27.1": "Tvañca bhadde suciṇṇena,",
"ja489:27.2": "pubbe sucaritena ca;",
"ja489:27.3": "Idha rājakule jātā,",
"ja489:27.4": "sabbakāmasamiddhinī.",
"ja489:28.1": "Ayañca te rājaputti,",
"ja489:28.2": "ubhayattha kaṭaggaho;",
"ja489:28.3": "Devalokūpapattī ca,",
"ja489:28.4": "kittī ca idha jīvite.",
"ja489:29.1": "Ciraṃ sumedhe sukhinī,",
"ja489:29.2": "dhammamattani pālaya;",
"ja489:29.3": "Esāhaṃ tidivaṃ yāmi,",
"ja489:29.4": "piyaṃ me tava dassanan”ti.",
"ja489:30.1": "Surucijātakaṃ chaṭṭhaṃ."
}