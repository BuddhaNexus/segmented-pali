{
"ja420:1.1": "Jātaka",
"ja420:2.1": "Aṭṭhakanipāta",
"ja420:3.1": "Kaccānivagga",
"ja420:4.1": "4. Sumaṅgalajātaka",
"ja420:5.1": "“Bhusamhi kuddhoti avekkhiyāna,",
"ja420:5.2": "Na tāva daṇḍaṃ paṇayeyya issaro;",
"ja420:5.3": "Aṭṭhānaso appatirūpamattano,",
"ja420:5.4": "Parassa dukkhāni bhusaṃ udīraye.",
"ja420:6.1": "Yato ca jāneyya pasādamattano,",
"ja420:6.2": "Atthaṃ niyuñjeyya parassa dukkaṭaṃ;",
"ja420:6.3": "Tadāyamatthoti sayaṃ avekkhiya,",
"ja420:6.4": "Athassa daṇḍaṃ sadisaṃ nivesaye.",
"ja420:7.1": "Na cāpi jhāpeti paraṃ na attanaṃ,",
"ja420:7.2": "Amucchito yo nayate nayānayaṃ;",
"ja420:7.3": "Yo daṇḍadhāro bhavatīdha issaro,",
"ja420:7.4": "Sa vaṇṇagutto siriyā na dhaṃsati.",
"ja420:8.1": "Ye khattiyā se anisammakārino,",
"ja420:8.2": "Paṇenti daṇḍaṃ sahasā pamucchitā;",
"ja420:8.3": "Avaṇṇasaṃyutā jahanti jīvitaṃ,",
"ja420:8.4": "Ito vimuttāpi ca yanti duggatiṃ.",
"ja420:9.1": "Dhamme ca ye ariyappavedite ratā,",
"ja420:9.2": "Anuttarā te vacasā manasā kammunā ca;",
"ja420:9.3": "Te santisoraccasamādhisaṇṭhitā,",
"ja420:9.4": "Vajanti lokaṃ dubhayaṃ tathāvidhā.",
"ja420:10.1": "Rājāhamasmi narapamadānamissaro,",
"ja420:10.2": "Sacepi kujjhāmi ṭhapemi attanaṃ;",
"ja420:10.3": "Nisedhayanto janataṃ tathāvidhaṃ,",
"ja420:10.4": "Paṇemi daṇḍaṃ anukampa yoniso”.",
"ja420:11.1": "“Sirī ca lakkhī ca taveva khattiya,",
"ja420:11.2": "Janādhipa mā vijahi kudācanaṃ;",
"ja420:11.3": "Akkodhano niccapasannacitto,",
"ja420:11.4": "Anīgho tuvaṃ vassasatāni pālaya.",
"ja420:12.1": "Guṇehi etehi upeta khattiya,",
"ja420:12.2": "Ṭhitamariyavattī suvaco akodhano;",
"ja420:12.3": "Sukhī anuppīḷa pasāsamediniṃ,",
"ja420:12.4": "Ito vimuttopi ca yāhi suggatiṃ.",
"ja420:13.1": "Evaṃ sunītena subhāsitena,",
"ja420:13.2": "Dhammena ñāyena upāyaso nayaṃ;",
"ja420:13.3": "Nibbāpaye saṅkhubhitaṃ mahājanaṃ,",
"ja420:13.4": "Mahāva megho salilena medinin”ti.",
"ja420:14.1": "Sumaṅgalajātakaṃ catutthaṃ."
}