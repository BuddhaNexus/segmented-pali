{
"ja303:1.1": "Jātaka",
"ja303:2.1": "Catukkanipāta",
"ja303:3.1": "Kāliṅgavagga",
"ja303:4.1": "3. Ekarājajātaka",
"ja303:5.1": "“Anuttare kāmaguṇe samiddhe,",
"ja303:5.2": "Bhutvāna pubbe vasī ekarāja;",
"ja303:5.3": "So dāni dugge narakamhi khitto,",
"ja303:5.4": "Nappajjahe vaṇṇabalaṃ purāṇaṃ”.",
"ja303:6.1": "“Pubbeva khantī ca tapo ca mayhaṃ,",
"ja303:6.2": "Sampatthitā dubbhisena ahosi;",
"ja303:6.3": "Taṃ dāni laddhāna kathaṃ nu rāja,",
"ja303:6.4": "Jahe ahaṃ vaṇṇabalaṃ purāṇaṃ.",
"ja303:7.1": "Sabbā kirevaṃ pariniṭṭhitāni,",
"ja303:7.2": "Yasassinaṃ paññavantaṃ visayha;",
"ja303:7.3": "Yaso ca laddhā purimaṃ uḷāraṃ,",
"ja303:7.4": "Nappajjahe vaṇṇabalaṃ purāṇaṃ.",
"ja303:8.1": "Panujja dukkhena sukhaṃ janinda,",
"ja303:8.2": "Sukhena vā dukkhamasayhasāhi;",
"ja303:8.3": "Ubhayattha santo abhinibbutattā,",
"ja303:8.4": "Sukhe ca dukkhe ca bhavanti tulyā”ti.",
"ja303:9.1": "Ekarājajātakaṃ tatiyaṃ."
}