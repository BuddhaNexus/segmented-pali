{
  "ja313:0.1": "Jātaka ",
  "ja313:0.2": "Catukkanipāta ",
  "ja313:0.3": "Pucimandavagga ",
  "ja313:0.4": "3. Khantīvādījātaka ",
  "ja313:1.1": "“Yo te hatthe ca pāde ca, ",
  "ja313:1.2": "kaṇṇanāsañca chedayi; ",
  "ja313:1.3": "Tassa kujjha mahāvīra, ",
  "ja313:1.4": "mā raṭṭhaṁ vinasā idaṁ”. ",
  "ja313:2.1": "“Yo me hatthe ca pāde ca, ",
  "ja313:2.2": "kaṇṇanāsañca chedayi; ",
  "ja313:2.3": "Ciraṁ jīvatu so rājā, ",
  "ja313:2.4": "na hi kujjhanti mādisā”. ",
  "ja313:3.1": "Ahū atītamaddhānaṁ, ",
  "ja313:3.2": "samaṇo khantidīpano; ",
  "ja313:3.3": "Taṁ khantiyāyeva ṭhitaṁ, ",
  "ja313:3.4": "kāsirājā achedayi. ",
  "ja313:4.1": "Tassa kammapharusassa, ",
  "ja313:4.2": "vipāko kaṭuko ahu; ",
  "ja313:4.3": "Yaṁ kāsirājā vedesi, ",
  "ja313:4.4": "nirayamhi samappitoti. ",
  "ja313:5.1": "Khantīvādījātakaṁ tatiyaṁ. "
}