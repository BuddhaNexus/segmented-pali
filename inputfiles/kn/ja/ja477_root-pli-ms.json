{
"ja477:1.1": "Jātaka",
"ja477:2.1": "Terasakanipāta",
"ja477:3.1": "Ambavagga",
"ja477:4.1": "4. Cūḷanāradajātaka",
"ja477:5.1": "“Na te kaṭṭhāni bhinnāni,",
"ja477:5.2": "na te udakamābhataṃ;",
"ja477:5.3": "Aggīpi te na hāpito,",
"ja477:5.4": "kiṃ nu mandova jhāyasi”.",
"ja477:6.1": "“Na ussahe vane vatthuṃ,",
"ja477:6.2": "kassapāmantayāmi taṃ;",
"ja477:6.3": "Dukkho vāso araññasmiṃ,",
"ja477:6.4": "raṭṭhaṃ icchāmi gantave.",
"ja477:7.1": "Yathā ahaṃ ito gantvā,",
"ja477:7.2": "Yasmiṃ janapade vasaṃ;",
"ja477:7.3": "Ācāraṃ brahme sikkheyyaṃ,",
"ja477:7.4": "Taṃ dhammaṃ anusāsa maṃ”.",
"ja477:8.1": "“Sace araññaṃ hitvāna,",
"ja477:8.2": "vanamūlaphalāni ca;",
"ja477:8.3": "Raṭṭhe rocayase vāsaṃ,",
"ja477:8.4": "taṃ dhammaṃ nisāmehi me.",
"ja477:9.1": "Visaṃ mā paṭisevittho,",
"ja477:9.2": "papātaṃ parivajjaya;",
"ja477:9.3": "Paṅke ca mā visīdittho,",
"ja477:9.4": "yatto cāsīvise care”.",
"ja477:10.1": "“Kiṃ nu visaṃ papāto vā,",
"ja477:10.2": "paṅko vā brahmacārinaṃ;",
"ja477:10.3": "Kaṃ tvaṃ āsīvisaṃ brūsi,",
"ja477:10.4": "taṃ me akkhāhi pucchito”.",
"ja477:11.1": "“Āsavo tāta lokasmiṃ,",
"ja477:11.2": "surā nāma pavuccati;",
"ja477:11.3": "Manuñño surabhī vaggu,",
"ja477:11.4": "sādu khuddarasūpamo;",
"ja477:11.5": "Visaṃ tadāhu ariyā se,",
"ja477:11.6": "brahmacariyassa nārada.",
"ja477:12.1": "Itthiyo tāta lokasmiṃ,",
"ja477:12.2": "pamattaṃ pamathenti tā;",
"ja477:12.3": "Haranti yuvino cittaṃ,",
"ja477:12.4": "tūlaṃ bhaṭṭhaṃva māluto;",
"ja477:12.5": "Papāto eso akkhāto,",
"ja477:12.6": "brahmacariyassa nārada.",
"ja477:13.1": "Lābho siloko sakkāro,",
"ja477:13.2": "pūjā parakulesu ca;",
"ja477:13.3": "Paṅko eso ca akkhāto,",
"ja477:13.4": "brahmacariyassa nārada.",
"ja477:14.1": "Sasatthā tāta rājāno,",
"ja477:14.2": "āvasanti mahiṃ imaṃ;",
"ja477:14.3": "Te tādise manussinde,",
"ja477:14.4": "mahante tāta nārada.",
"ja477:15.1": "Issarānaṃ adhipatīnaṃ,",
"ja477:15.2": "na tesaṃ pādato care;",
"ja477:15.3": "Āsīvisoti akkhāto,",
"ja477:15.4": "brahmacariyassa nārada.",
"ja477:16.1": "Bhattattho bhattakāle ca,",
"ja477:16.2": "yaṃ gehamupasaṅkame;",
"ja477:16.3": "Yadettha kusalaṃ jaññā,",
"ja477:16.4": "tattha ghāsesanaṃ care.",
"ja477:17.1": "Pavisitvā parakulaṃ,",
"ja477:17.2": "pānatthaṃ bhojanāya vā;",
"ja477:17.3": "Mitaṃ khāde mitaṃ bhuñje,",
"ja477:17.4": "na ca rūpe manaṃ kare.",
"ja477:18.1": "Goṭṭhaṃ majjaṃ kirāṭañca,",
"ja477:18.2": "sabhā nikiraṇāni ca;",
"ja477:18.3": "Ārakā parivajjehi,",
"ja477:18.4": "yānīva visamaṃ pathan”ti.",
"ja477:19.1": "Cūḷanāradajātakaṃ catutthaṃ."
}