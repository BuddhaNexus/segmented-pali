{
"ja527:1.1": "Jātaka",
"ja527:2.1": "Paṇṇāsanipāta",
"ja527:3.1": "Niḷinikāvagga",
"ja527:4.1": "2 Ummādantījātaka",
"ja527:5.1": "“Nivesanaṃ kassa nudaṃ sunanda,",
"ja527:5.2": "Pākārena paṇḍumayena guttaṃ;",
"ja527:5.3": "Kā dissati aggisikhāva dūre,",
"ja527:5.4": "Vehāyasaṃ pabbataggeva acci.",
"ja527:6.1": "Dhītā nvayaṃ kassa sunanda hoti,",
"ja527:6.2": "Suṇisā nvayaṃ kassa athopi bhariyā;",
"ja527:6.3": "Akkhāhi me khippamidheva puṭṭho,",
"ja527:6.4": "Avāvaṭā yadi vā atthi bhattā”.",
"ja527:7.1": "“Ahañhi jānāmi janinda etaṃ,",
"ja527:7.2": "Matyā ca petyā ca athopi assā;",
"ja527:7.3": "Taveva so puriso bhūmipāla,",
"ja527:7.4": "Rattindivaṃ appamatto tavatthe.",
"ja527:8.1": "Iddho ca phīto ca suvaḍḍhito ca,",
"ja527:8.2": "Amacco ca te aññataro janinda;",
"ja527:8.3": "Tassesā bhariyābhipārakassa,",
"ja527:8.4": "Ummādantī nāmadheyyena rāja”.",
"ja527:9.1": "“Ambho ambho nāmamidaṃ imissā,",
"ja527:9.2": "Matyā ca petyā ca kataṃ susādhu;",
"ja527:9.3": "Tadā hi mayhaṃ avalokayantī,",
"ja527:9.4": "Ummattakaṃ ummadantī akāsi.",
"ja527:10.1": "Yā puṇṇamāse migamandalocanā,",
"ja527:10.2": "Upāvisi puṇḍarīkattacaṅgī;",
"ja527:10.3": "Dve puṇṇamāyo tadahū amaññahaṃ,",
"ja527:10.4": "Disvāna pārāvatarattavāsiniṃ.",
"ja527:11.1": "Aḷārapamhehi subhehi vaggubhi,",
"ja527:11.2": "Palobhayantī maṃ yadā udikkhati;",
"ja527:11.3": "Vijambhamānā harateva me mano,",
"ja527:11.4": "Jātā vane kimpurisīva pabbate.",
"ja527:12.1": "Tadā hi brahatī sāmā,",
"ja527:12.2": "āmuttamaṇikuṇḍalā;",
"ja527:12.3": "Ekaccavasanā nārī,",
"ja527:12.4": "migī bhantāvudikkhati.",
"ja527:13.1": "Kadāssu maṃ tambanakhā sulomā,",
"ja527:13.2": "Bāhāmudū candanasāralittā;",
"ja527:13.3": "Vaṭṭaṅgulī sannatadhīrakuttiyā,",
"ja527:13.4": "Nārī upaññissati sīsato subhā.",
"ja527:14.1": "Kadāssu maṃ kañcanajāluracchadā,",
"ja527:14.2": "Dhītā tirīṭissa vilaggamajjhā;",
"ja527:14.3": "Mudūhi bāhāhi palissajissati,",
"ja527:14.4": "Brahāvane jātadumaṃva māluvā.",
"ja527:15.1": "Kadāssu lākhārasarattasucchavī,",
"ja527:15.2": "Bindutthanī puṇḍarīkattacaṅgī;",
"ja527:15.3": "Mukhaṃ mukhena upanāmayissati,",
"ja527:15.4": "Soṇḍova soṇḍassa surāya thālaṃ.",
"ja527:16.1": "Yadāddasaṃ taṃ tiṭṭhantiṃ,",
"ja527:16.2": "Sabbabhaddaṃ manoramaṃ;",
"ja527:16.3": "Tato sakassa cittassa,",
"ja527:16.4": "Nāvabodhāmi kañcinaṃ.",
"ja527:17.1": "Ummādantimahaṃ daṭṭhā,",
"ja527:17.2": "āmuttamaṇikuṇḍalaṃ;",
"ja527:17.3": "Na supāmi divārattiṃ,",
"ja527:17.4": "sahassaṃva parājito.",
"ja527:18.1": "Sakko ce me varaṃ dajjā,",
"ja527:18.2": "so ca labbhetha me varo;",
"ja527:18.3": "Ekarattaṃ dvirattaṃ vā,",
"ja527:18.4": "bhaveyyaṃ abhipārako;",
"ja527:18.5": "Ummādantyā ramitvāna,",
"ja527:18.6": "sivirājā tato siyaṃ”.",
"ja527:19.1": "“Bhūtāni me bhūtapatī namassato,",
"ja527:19.2": "Āgamma yakkho idametadabravi;",
"ja527:19.3": "Rañño mano ummadantyā niviṭṭho,",
"ja527:19.4": "Dadāmi te taṃ paricārayassu”.",
"ja527:20.1": "“Puññā ca dhaṃse amaro na camhi,",
"ja527:20.2": "Jano ca me pāpamidañca jaññā;",
"ja527:20.3": "Bhuso ca tyassa manaso vighāto,",
"ja527:20.4": "Datvā piyaṃ ummadantiṃ adaṭṭhā”.",
"ja527:21.1": "“Janinda nāññatra tayā mayā vā,",
"ja527:21.2": "Sabbāpi kammassa katassa jaññā;",
"ja527:21.3": "Yaṃ te mayā ummadantī padinnā,",
"ja527:21.4": "Bhusehi rājā vanathaṃ sajāhi”.",
"ja527:22.1": "“Yo pāpakaṃ kamma karaṃ manusso,",
"ja527:22.2": "So maññati māyida maññiṃsu aññe;",
"ja527:22.3": "Passanti bhūtāni karontametaṃ,",
"ja527:22.4": "Yuttā ca ye honti narā pathabyā.",
"ja527:23.1": "Añño nu te koci naro pathabyā,",
"ja527:23.2": "Saddheyya lokasmi na me piyāti;",
"ja527:23.3": "Bhuso ca tyassa manaso vighāto,",
"ja527:23.4": "Datvā piyaṃ ummadantiṃ adaṭṭhā”.",
"ja527:24.1": "“Addhā piyā mayha janinda esā,",
"ja527:24.2": "Na sā mamaṃ appiyā bhūmipāla;",
"ja527:24.3": "Gaccheva tvaṃ ummadantiṃ bhadante,",
"ja527:24.4": "Sīhova selassa guhaṃ upeti”.",
"ja527:25.1": "“Na pīḷitā attadukhena dhīrā,",
"ja527:25.2": "Sukhapphalaṃ kamma pariccajanti;",
"ja527:25.3": "Sammohitā vāpi sukhena mattā,",
"ja527:25.4": "Na pāpakammañca samācaranti”.",
"ja527:26.1": "“Tuvañhi mātā ca pitā ca mayhaṃ,",
"ja527:26.2": "Bhattā patī posako devatā ca;",
"ja527:26.3": "Dāso ahaṃ tuyha saputtadāro,",
"ja527:26.4": "Yathāsukhaṃ sāmi karohi kāmaṃ”.",
"ja527:27.1": "“Yo issaromhīti karoti pāpaṃ,",
"ja527:27.2": "Katvā ca so nuttasate paresaṃ;",
"ja527:27.3": "Na tena so jīvati dīghamāyu,",
"ja527:27.4": "Devāpi pāpena samekkhare naṃ.",
"ja527:28.1": "Aññātakaṃ sāmikehī padinnaṃ,",
"ja527:28.2": "Dhamme ṭhitā ye paṭicchanti dānaṃ;",
"ja527:28.3": "Paṭicchakā dāyakā cāpi tattha,",
"ja527:28.4": "Sukhapphalaññeva karonti kammaṃ.",
"ja527:29.1": "Añño nu te koci naro pathabyā,",
"ja527:29.2": "Saddheyya lokasmi na me piyāti;",
"ja527:29.3": "Bhuso ca tyassa manaso vighāto,",
"ja527:29.4": "Datvā piyaṃ ummadantiṃ adaṭṭhā”.",
"ja527:30.1": "“Addhā piyā mayha janinda esā,",
"ja527:30.2": "Na sā mamaṃ appiyā bhūmipāla;",
"ja527:30.3": "Yaṃ te mayā ummadantī padinnā,",
"ja527:30.4": "Bhusehi rājā vanathaṃ sajāhi”.",
"ja527:31.1": "“Yo attadukkhena parassa dukkhaṃ,",
"ja527:31.2": "Sukhena vā attasukhaṃ dahāti;",
"ja527:31.3": "Yathevidaṃ mayha tathā paresaṃ,",
"ja527:31.4": "Yo evaṃ jānāti sa vedi dhammaṃ.",
"ja527:32.1": "Añño nu te koci naro pathabyā,",
"ja527:32.2": "Saddheyya lokasmi na me piyāti;",
"ja527:32.3": "Bhuso ca tyassa manaso vighāto,",
"ja527:32.4": "Datvā piyaṃ ummadantiṃ adaṭṭhā”.",
"ja527:33.1": "“Janinda jānāsi piyā mamesā,",
"ja527:33.2": "Na sā mamaṃ appiyā bhūmipāla;",
"ja527:33.3": "Piyena te dammi piyaṃ janinda,",
"ja527:33.4": "Piyadāyino deva piyaṃ labhanti”.",
"ja527:34.1": "“So nūnāhaṃ vadhissāmi,",
"ja527:34.2": "attānaṃ kāmahetukaṃ;",
"ja527:34.3": "Na hi dhammaṃ adhammena,",
"ja527:34.4": "ahaṃ vadhitumussahe”.",
"ja527:35.1": "“Sace tuvaṃ mayha satiṃ janinda,",
"ja527:35.2": "Na kāmayāsi naravīra seṭṭha;",
"ja527:35.3": "Cajāmi naṃ sabbajanassa sibyā,",
"ja527:35.4": "Mayā pamuttaṃ tato avhayesi naṃ”.",
"ja527:36.1": "“Adūsiyañce abhipāraka tvaṃ,",
"ja527:36.2": "Cajāsi katte ahitāya tyassa;",
"ja527:36.3": "Mahā ca te upavādopi assa,",
"ja527:36.4": "Na cāpi tyassa nagaramhi pakkho”.",
"ja527:37.1": "“Ahaṃ sahissaṃ upavādametaṃ,",
"ja527:37.2": "Nindaṃ pasaṃsaṃ garahañca sabbaṃ;",
"ja527:37.3": "Mametamāgacchatu bhūmipāla,",
"ja527:37.4": "Yathāsukhaṃ sivi karohi kāmaṃ”.",
"ja527:38.1": "“Yo neva nindaṃ na panappasaṃsaṃ,",
"ja527:38.2": "Ādiyati garahaṃ nopi pūjaṃ;",
"ja527:38.3": "Sirī ca lakkhī ca apeti tamhā,",
"ja527:38.4": "Āpo suvuṭṭhīva yathā thalamhā”.",
"ja527:39.1": "“Yaṃ kiñci dukkhañca sukhañca etto,",
"ja527:39.2": "Dhammātisārañca manovighātaṃ;",
"ja527:39.3": "Urasā ahaṃ paccuttarissāmi sabbaṃ,",
"ja527:39.4": "Pathavī yathā thāvarānaṃ tasānaṃ”.",
"ja527:40.1": "“Dhammātisārañca manovighātaṃ,",
"ja527:40.2": "Dukkhañca nicchāmi ahaṃ paresaṃ;",
"ja527:40.3": "Ekovimaṃ hārayissāmi bhāraṃ,",
"ja527:40.4": "Dhamme ṭhito kiñci ahāpayanto”.",
"ja527:41.1": "“Saggūpagaṃ puññakammaṃ janinda,",
"ja527:41.2": "Mā me tuvaṃ antarāyaṃ akāsi;",
"ja527:41.3": "Dadāmi te ummadantiṃ pasanno,",
"ja527:41.4": "Rājāva yaññe dhanaṃ brāhmaṇānaṃ”.",
"ja527:42.1": "“Addhā tuvaṃ katte hitesi mayhaṃ,",
"ja527:42.2": "Sakhā mamaṃ ummadantī tuvañca;",
"ja527:42.3": "Nindeyyu devā pitaro ca sabbe,",
"ja527:42.4": "Pāpañca passaṃ abhisamparāyaṃ”.",
"ja527:43.1": "“Na hetadhammaṃ sivirāja vajjuṃ,",
"ja527:43.2": "Sanegamā jānapadā ca sabbe;",
"ja527:43.3": "Yaṃ te mayā ummadantī padinnā,",
"ja527:43.4": "Bhusehi rājā vanathaṃ sajāhi”.",
"ja527:44.1": "“Addhā tuvaṃ katte hitesi mayhaṃ,",
"ja527:44.2": "Sakhā mamaṃ ummadantī tuvañca;",
"ja527:44.3": "Satañca dhammāni sukittitāni,",
"ja527:44.4": "Samuddavelāva duraccayāni”.",
"ja527:45.1": "“Āhuneyyo mesi hitānukampī,",
"ja527:45.2": "Dhātā vidhātā casi kāmapālo;",
"ja527:45.3": "Tayī hutā rāja mahapphalā hi,",
"ja527:45.4": "Kāmena me ummadantiṃ paṭiccha”.",
"ja527:46.1": "“Addhā hi sabbaṃ abhipāraka tvaṃ,",
"ja527:46.2": "Dhammaṃ acārī mama kattuputta;",
"ja527:46.3": "Añño nu te ko idha sotthikattā,",
"ja527:46.4": "Dvipado naro aruṇe jīvaloke”.",
"ja527:47.1": "“Tuvaṃ nu seṭṭho tvamanuttarosi,",
"ja527:47.2": "Tvaṃ dhammagutto dhammavidū sumedho;",
"ja527:47.3": "So dhammagutto cirameva jīva,",
"ja527:47.4": "Dhammañca me desaya dhammapāla”.",
"ja527:48.1": "“Tadiṅgha abhipāraka,",
"ja527:48.2": "suṇohi vacanaṃ mama;",
"ja527:48.3": "Dhammaṃ te desayissāmi,",
"ja527:48.4": "sataṃ āsevitaṃ ahaṃ.",
"ja527:49.1": "Sādhu dhammaruci rājā,",
"ja527:49.2": "sādhu paññāṇavā naro;",
"ja527:49.3": "Sādhu mittānamaddubbho,",
"ja527:49.4": "pāpassākaraṇaṃ sukhaṃ.",
"ja527:50.1": "Akkodhanassa vijite,",
"ja527:50.2": "ṭhitadhammassa rājino;",
"ja527:50.3": "Sukhaṃ manussā āsetha,",
"ja527:50.4": "sītacchāyāya saṅghare.",
"ja527:51.1": "Na cāhametaṃ abhirocayāmi,",
"ja527:51.2": "Kammaṃ asamekkhakataṃ asādhu;",
"ja527:51.3": "Ye vāpi ñatvāna sayaṃ karonti,",
"ja527:51.4": "Upamā imā mayhaṃ tuvaṃ suṇohi.",
"ja527:52.1": "Gavañce taramānānaṃ,",
"ja527:52.2": "jimhaṃ gacchati puṅgavo;",
"ja527:52.3": "Sabbā tā jimhaṃ gacchanti,",
"ja527:52.4": "nette jimhaṃ gate sati.",
"ja527:53.1": "Evameva manussesu,",
"ja527:53.2": "yo hoti seṭṭhasammato;",
"ja527:53.3": "So ce adhammaṃ carati,",
"ja527:53.4": "pageva itarā pajā;",
"ja527:53.5": "Sabbaṃ raṭṭhaṃ dukhaṃ seti,",
"ja527:53.6": "rājā ce hoti adhammiko.",
"ja527:54.1": "Gavañce taramānānaṃ,",
"ja527:54.2": "ujuṃ gacchati puṅgavo;",
"ja527:54.3": "Sabbā gāvī ujuṃ yanti,",
"ja527:54.4": "nette ujuṃ gate sati.",
"ja527:55.1": "Evameva manussesu,",
"ja527:55.2": "yo hoti seṭṭhasammato;",
"ja527:55.3": "So sace dhammaṃ carati,",
"ja527:55.4": "pageva itarā pajā;",
"ja527:55.5": "Sabbaṃ raṭṭhaṃ sukhaṃ seti,",
"ja527:55.6": "rājā ce hoti dhammiko.",
"ja527:56.1": "Na cāpāhaṃ adhammena,",
"ja527:56.2": "amarattamabhipatthaye;",
"ja527:56.3": "Imaṃ vā pathaviṃ sabbaṃ,",
"ja527:56.4": "vijetuṃ abhipāraka.",
"ja527:57.1": "Yañhi kiñci manussesu,",
"ja527:57.2": "ratanaṃ idha vijjati;",
"ja527:57.3": "Gāvo dāso hiraññañca,",
"ja527:57.4": "vatthiyaṃ haricandanaṃ.",
"ja527:58.1": "Assitthiyo ratanaṃ maṇikañca,",
"ja527:58.2": "Yañcāpi me candasūriyā abhipālayanti;",
"ja527:58.3": "Na tassa hetu visamaṃ careyyaṃ,",
"ja527:58.4": "Majjhe sivīnaṃ usabhomhi jāto.",
"ja527:59.1": "Netā hitā uggato raṭṭhapālo,",
"ja527:59.2": "Dhammaṃ sivīnaṃ apacāyamāno;",
"ja527:59.3": "So dhammamevānuvicintayanto,",
"ja527:59.4": "Tasmā sake cittavase na vatto”.",
"ja527:60.1": "“Addhā tuvaṃ mahārāja,",
"ja527:60.2": "niccaṃ abyasanaṃ sivaṃ;",
"ja527:60.3": "Karissasi ciraṃ rajjaṃ,",
"ja527:60.4": "paññā hi tava tādisī.",
"ja527:61.1": "Etaṃ te anumodāma,",
"ja527:61.2": "yaṃ dhammaṃ nappamajjasi;",
"ja527:61.3": "Dhammaṃ pamajja khattiyo,",
"ja527:61.4": "raṭṭhā cavati issaro.",
"ja527:62.1": "Dhammaṃ cara mahārāja,",
"ja527:62.2": "mātāpitūsu khattiya;",
"ja527:62.3": "Idha dhammaṃ caritvāna,",
"ja527:62.4": "rāja saggaṃ gamissasi.",
"ja527:63.1": "Dhammaṃ cara mahārāja,",
"ja527:63.2": "puttadāresu khattiya; … pe …",
"ja527:64.1": "Dhammaṃ cara mahārāja,",
"ja527:64.2": "mittāmaccesu khattiya; … pe …",
"ja527:65.1": "Dhammaṃ cara mahārāja,",
"ja527:65.2": "vāhanesu balesu ca; … pe …",
"ja527:66.1": "Dhammaṃ cara mahārāja,",
"ja527:66.2": "gāmesu nigamesu ca; … pe …",
"ja527:67.1": "Dhammaṃ cara mahārāja,",
"ja527:67.2": "raṭṭhesu janapadesu ca; … pe …",
"ja527:68.1": "Dhammaṃ cara mahārāja,",
"ja527:68.2": "samaṇabrāhmaṇesu ca; … pe …",
"ja527:69.1": "Dhammaṃ cara mahārāja,",
"ja527:69.2": "migapakkhīsu khattiya; … pe …",
"ja527:70.1": "Dhammaṃ cara mahārāja,",
"ja527:70.2": "dhammo ciṇṇo sukhāvaho;",
"ja527:70.3": "Idha dhammaṃ caritvāna,",
"ja527:70.4": "rāja saggaṃ gamissasi.",
"ja527:71.1": "Dhammaṃ cara mahārāja,",
"ja527:71.2": "saindā devā sabrahmakā;",
"ja527:71.3": "Suciṇṇena divaṃ pattā,",
"ja527:71.4": "mā dhammaṃ rāja pāmado”ti.",
"ja527:72.1": "Ummādantījātakaṃ dutiyaṃ."
}