{
"ja386:1.1": "Jātaka",
"ja386:2.1": "Chakkanipāta",
"ja386:3.1": "Kharaputtavagga",
"ja386:4.1": "1. Kharaputtajātaka",
"ja386:5.1": "“Saccaṃ kirevamāhaṃsu,",
"ja386:5.2": "vastaṃ bāloti paṇḍitā;",
"ja386:5.3": "Passa bālo rahokammaṃ,",
"ja386:5.4": "āvikubbaṃ na bujjhati”.",
"ja386:6.1": "“Tvaṃ khopi samma bālosi,",
"ja386:6.2": "kharaputta vijānahi;",
"ja386:6.3": "Rajjuyā hi parikkhitto,",
"ja386:6.4": "vaṅkoṭṭho ohitomukho.",
"ja386:7.1": "Aparampi samma te bālyaṃ,",
"ja386:7.2": "yo mutto na palāyasi;",
"ja386:7.3": "So ca bālataro samma,",
"ja386:7.4": "yaṃ tvaṃ vahasi senakaṃ”.",
"ja386:8.1": "“Yannu samma ahaṃ bālo,",
"ja386:8.2": "ajarāja vijānahi;",
"ja386:8.3": "Atha kena senako bālo,",
"ja386:8.4": "taṃ me akkhāhi pucchito”.",
"ja386:9.1": "“Uttamatthaṃ labhitvāna,",
"ja386:9.2": "bhariyāya yo padassati;",
"ja386:9.3": "Tena jahissatattānaṃ,",
"ja386:9.4": "sā cevassa na hessati”.",
"ja386:10.1": "“Na ve piyammeti janinda tādiso,",
"ja386:10.2": "Attaṃ niraṃkatvā piyāni sevati;",
"ja386:10.3": "Attāva seyyo paramā ca seyyo,",
"ja386:10.4": "Labbhā piyā ocitatthena pacchā”ti.",
"ja386:11.1": "Kharaputtajātakaṃ paṭhamaṃ."
}