{
"ja397:1.1": "Jātaka",
"ja397:2.1": "Sattakanipāta",
"ja397:3.1": "Kukkuvagga",
"ja397:4.1": "2. Manojajātaka",
"ja397:5.1": "“Yathā cāpo ninnamati,",
"ja397:5.2": "jiyā cāpi nikūjati;",
"ja397:5.3": "Haññate nūna manojo,",
"ja397:5.4": "migarājā sakhā mama.",
"ja397:6.1": "Handa dāni vanantāni,",
"ja397:6.2": "pakkamāmi yathāsukhaṃ;",
"ja397:6.3": "Netādisā sakhā honti,",
"ja397:6.4": "labbhā me jīvato sakhā”.",
"ja397:7.1": "“Na pāpajanasaṃsevī,",
"ja397:7.2": "accantaṃ sukhamedhati;",
"ja397:7.3": "Manojaṃ passa semānaṃ,",
"ja397:7.4": "giriyassānusāsanī”.",
"ja397:8.1": "“Na pāpasampavaṅkena,",
"ja397:8.2": "mātā puttena nandati;",
"ja397:8.3": "Manojaṃ passa semānaṃ,",
"ja397:8.4": "acchannaṃ samhi lohite”.",
"ja397:9.1": "“Evamāpajjate poso,",
"ja397:9.2": "pāpiyo ca nigacchati;",
"ja397:9.3": "Yo ve hitānaṃ vacanaṃ,",
"ja397:9.4": "na karoti atthadassinaṃ”.",
"ja397:10.1": "“Evañca so hoti tato ca pāpiyo,",
"ja397:10.2": "Yo uttamo adhamajanūpasevī;",
"ja397:10.3": "Passuttamaṃ adhamajanūpasevitaṃ,",
"ja397:10.4": "Migādhipaṃ saravaraveganiddhutaṃ”.",
"ja397:11.1": "“Nihīyati puriso nihīnasevī,",
"ja397:11.2": "Na ca hāyetha kadāci tulyasevī;",
"ja397:11.3": "Seṭṭhamupagamaṃ udeti khippaṃ,",
"ja397:11.4": "Tasmāttanā uttaritaraṃ bhajethā”ti.",
"ja397:12.1": "Manojajātakaṃ dutiyaṃ."
}