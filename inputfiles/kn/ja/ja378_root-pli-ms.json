{
"ja378:1.1": "Jātaka",
"ja378:2.1": "Chakkanipāta",
"ja378:3.1": "Avāriyavagga",
"ja378:4.1": "3. Darīmukhajātaka",
"ja378:5.1": "“Paṅko ca kāmā palipo ca kāmā,",
"ja378:5.2": "Bhayañca metaṃ timūlaṃ pavuttaṃ;",
"ja378:5.3": "Rajo ca dhūmo ca mayā pakāsitā,",
"ja378:5.4": "Hitvā tuvaṃ pabbaja brahmadatta”.",
"ja378:6.1": "“Gadhito ca ratto ca adhimucchito ca,",
"ja378:6.2": "Kāmesvahaṃ brāhmaṇa bhiṃsarūpaṃ;",
"ja378:6.3": "Taṃ nussahe jīvikattho pahātuṃ,",
"ja378:6.4": "Kāhāmi puññāni anappakāni”.",
"ja378:7.1": "“Yo atthakāmassa hitānukampino,",
"ja378:7.2": "Ovajjamāno na karoti sāsanaṃ;",
"ja378:7.3": "Idameva seyyo iti maññamāno,",
"ja378:7.4": "Punappunaṃ gabbhamupeti mando.",
"ja378:8.1": "So ghorarūpaṃ nirayaṃ upeti,",
"ja378:8.2": "Subhāsubhaṃ muttakarīsapūraṃ;",
"ja378:8.3": "Sattā sakāye na jahanti giddhā,",
"ja378:8.4": "Ye honti kāmesu avītarāgā”.",
"ja378:9.1": "“Mīḷhena littā ruhirena makkhitā,",
"ja378:9.2": "Semhena littā upanikkhamanti;",
"ja378:9.3": "Yaṃ yañhi kāyena phusanti tāvade,",
"ja378:9.4": "Sabbaṃ asātaṃ dukhameva kevalaṃ.",
"ja378:10.1": "Disvā vadāmi na hi aññato savaṃ,",
"ja378:10.2": "Pubbenivāsaṃ bahukaṃ sarāmi;",
"ja378:10.3": "Citrāhi gāthāhi subhāsitāhi,",
"ja378:10.4": "Darīmukho nijjhāpayi sumedhan”ti.",
"ja378:11.1": "Darīmukhajātakaṃ tatiyaṃ."
}