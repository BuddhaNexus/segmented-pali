{
"ja496:1.1": "Jātaka",
"ja496:2.1": "Pakiṇṇakanipāta",
"ja496:3.1": "Sālikedāravagga",
"ja496:4.1": "13. Bhikkhāparamparajātaka",
"ja496:5.1": "“Sukhumālarūpaṃ disvā,",
"ja496:5.2": "raṭṭhā vivanamāgataṃ;",
"ja496:5.3": "Kūṭāgāravarūpetaṃ,",
"ja496:5.4": "mahāsayanamupāsitaṃ.",
"ja496:6.1": "Tassa te pemakenāhaṃ,",
"ja496:6.2": "adāsiṃ vaḍḍhamodanaṃ;",
"ja496:6.3": "Sālīnaṃ vicitaṃ bhattaṃ,",
"ja496:6.4": "suciṃ maṃsūpasecanaṃ.",
"ja496:7.1": "Taṃ tvaṃ bhattaṃ paṭiggayha,",
"ja496:7.2": "brāhmaṇassa adāsayi;",
"ja496:7.3": "Attānaṃ anasitvāna,",
"ja496:7.4": "koyaṃ dhammo namatthu te”.",
"ja496:8.1": "“Ācariyo brāhmaṇo mayhaṃ,",
"ja496:8.2": "kiccākiccesu byāvaṭo;",
"ja496:8.3": "Garu ca āmantanīyo ca,",
"ja496:8.4": "dātumarahāmi bhojanaṃ”.",
"ja496:9.1": "“Brāhmaṇaṃ dāni pucchāmi,",
"ja496:9.2": "gotamaṃ rājapūjitaṃ;",
"ja496:9.3": "Rājā te bhattaṃ pādāsi,",
"ja496:9.4": "suciṃ maṃsūpasecanaṃ.",
"ja496:10.1": "Taṃ tvaṃ bhattaṃ paṭiggayha,",
"ja496:10.2": "isissa bhojanaṃ adā;",
"ja496:10.3": "Akhettaññūsi dānassa,",
"ja496:10.4": "koyaṃ dhammo namatthu te”.",
"ja496:11.1": "“Bharāmi puttadāre ca,",
"ja496:11.2": "gharesu gadhito ahaṃ;",
"ja496:11.3": "Bhuñje mānusake kāme,",
"ja496:11.4": "anusāsāmi rājino.",
"ja496:12.1": "Āraññikassa isino,",
"ja496:12.2": "cirarattaṃ tapassino;",
"ja496:12.3": "Vuḍḍhassa bhāvitattassa,",
"ja496:12.4": "dātumarahāmi bhojanaṃ”.",
"ja496:13.1": "“Isiñca dāni pucchāmi,",
"ja496:13.2": "kisaṃ dhamanisanthataṃ;",
"ja496:13.3": "Parūḷhakacchanakhalomaṃ,",
"ja496:13.4": "paṅkadantaṃ rajassiraṃ.",
"ja496:14.1": "Eko araññe viharasi,",
"ja496:14.2": "nāvakaṅkhasi jīvitaṃ;",
"ja496:14.3": "Bhikkhu kena tayā seyyo,",
"ja496:14.4": "yassa tvaṃ bhojanaṃ adā”.",
"ja496:15.1": "“Khaṇantālukalambāni,",
"ja496:15.2": "bilālitakkalāni ca;",
"ja496:15.3": "Dhunaṃ sāmākanīvāraṃ,",
"ja496:15.4": "saṃghāriyaṃ pasāriyaṃ.",
"ja496:16.1": "Sākaṃ bhisaṃ madhuṃ maṃsaṃ,",
"ja496:16.2": "Badarāmalakāni ca;",
"ja496:16.3": "Tāni āharitvā bhuñjāmi,",
"ja496:16.4": "Atthi me so pariggaho.",
"ja496:17.1": "Pacanto apacantassa,",
"ja496:17.2": "amamassa sakiñcano;",
"ja496:17.3": "Anādānassa sādāno,",
"ja496:17.4": "dātumarahāmi bhojanaṃ”.",
"ja496:18.1": "“Bhikkhuñca dāni pucchāmi,",
"ja496:18.2": "tuṇhīmāsīna subbataṃ;",
"ja496:18.3": "Isi te bhattaṃ pādāsi,",
"ja496:18.4": "suciṃ maṃsūpasecanaṃ.",
"ja496:19.1": "Taṃ tvaṃ bhattaṃ paṭiggayha,",
"ja496:19.2": "tuṇhī bhuñjasi ekako;",
"ja496:19.3": "Nāññaṃ kañci nimantesi,",
"ja496:19.4": "koyaṃ dhammo namatthu te”.",
"ja496:20.1": "“Na pacāmi na pācemi,",
"ja496:20.2": "na chindāmi na chedaye;",
"ja496:20.3": "Taṃ maṃ akiñcanaṃ ñatvā,",
"ja496:20.4": "sabbapāpehi ārataṃ.",
"ja496:21.1": "Vāmena bhikkhamādāya,",
"ja496:21.2": "dakkhiṇena kamaṇḍaluṃ;",
"ja496:21.3": "Isi me bhattaṃ pādāsi,",
"ja496:21.4": "suciṃ maṃsūpasecanaṃ.",
"ja496:22.1": "Ete hi dātumarahanti,",
"ja496:22.2": "samamā sapariggahā;",
"ja496:22.3": "Paccanīkamahaṃ maññe,",
"ja496:22.4": "yo dātāraṃ nimantaye”.",
"ja496:23.1": "“Atthāya vata me ajja,",
"ja496:23.2": "idhāgacchi rathesabho;",
"ja496:23.3": "Sohaṃ ajja pajānāmi,",
"ja496:23.4": "yattha dinnaṃ mahapphalaṃ.",
"ja496:24.1": "Raṭṭhesu giddhā rājāno,",
"ja496:24.2": "Kiccākiccesu brāhmaṇā;",
"ja496:24.3": "Isī mūlaphale giddhā,",
"ja496:24.4": "Vippamuttā ca bhikkhavo”ti. #2219",
"ja496:25.1": "Bhikkhāparamparajātakaṃ terasamaṃ.",
"ja496:26.1": "Pakiṇṇakanipātaṃ niṭṭhitaṃ.",
"ja496:27.1": "Tassuddānaṃ",
"ja496:28.1": "Suva kinnara mukka kharājinaso,",
"ja496:28.2": "Bhisajāta mahesi kapotavaro;",
"ja496:28.3": "Atha mora satacchaka vāṇijako,",
"ja496:28.4": "Atha rāja sabrāhmaṇa bhikkhaparanti."
}