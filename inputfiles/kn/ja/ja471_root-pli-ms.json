{
"ja471:1.1": "Jātaka",
"ja471:2.1": "Dvādasakanipāta",
"ja471:3.1": "Cūḷakuṇālavagga",
"ja471:4.1": "8. Meṇḍakapañhajātaka",
"ja471:5.1": "“Yesaṃ na kadāci bhūtapubbaṃ,",
"ja471:5.2": "Sakhyaṃ sattapadampimasmi loke;",
"ja471:5.3": "Jātā amittā duve sahāyā,",
"ja471:5.4": "Paṭisandhāya caranti kissa hetu”.",
"ja471:6.1": "“Yadi me ajja pātarāsakāle,",
"ja471:6.2": "Pañhaṃ na sakkuṇeyyātha vattumetaṃ;",
"ja471:6.3": "Raṭṭhā pabbājayissāmi vo sabbe,",
"ja471:6.4": "Na hi mattho duppaññajātikehi”.",
"ja471:7.1": "“Mahājanasamāgamamhi ghore,",
"ja471:7.2": "Janakolāhalasaṅgamamhi jāte;",
"ja471:7.3": "Vikkhittamanā anekacittā,",
"ja471:7.4": "Pañhaṃ na sakkuṇoma vattumetaṃ.",
"ja471:8.1": "Ekaggacittāva ekamekā,",
"ja471:8.2": "Rahasi gatā atthaṃ nicintayitvā;",
"ja471:8.3": "Paviveke sammasitvāna dhīrā,",
"ja471:8.4": "Atha vakkhanti janinda etamatthaṃ”.",
"ja471:9.1": "“Uggaputtarājaputtiyānaṃ,",
"ja471:9.2": "Urabbhassa maṃsaṃ piyaṃ manāpaṃ;",
"ja471:9.3": "Na sunakhassa te adenti maṃsaṃ,",
"ja471:9.4": "Atha meṇḍassa suṇena sakhyamassa”.",
"ja471:10.1": "“Cammaṃ vihananti eḷakassa,",
"ja471:10.2": "Assapiṭṭhattharassukhassa hetu;",
"ja471:10.3": "Na ca te sunakhassa attharanti,",
"ja471:10.4": "Atha meṇḍassa suṇena sakhyamassa”.",
"ja471:11.1": "“Āvellitasiṅgiko hi meṇḍo,",
"ja471:11.2": "Na ca sunakhassa visāṇakāni atthi;",
"ja471:11.3": "Tiṇabhakkho maṃsabhojano ca,",
"ja471:11.4": "Atha meṇḍassa suṇena sakhyamassa”.",
"ja471:12.1": "“Tiṇamāsi palāsamāsi meṇḍo,",
"ja471:12.2": "Na ca sunakho tiṇamāsi no palāsaṃ;",
"ja471:12.3": "Gaṇheyya suṇo sasaṃ biḷāraṃ,",
"ja471:12.4": "Atha meṇḍassa suṇena sakhyamassa”.",
"ja471:13.1": "“Aṭṭhaḍḍhapado catuppadassa,",
"ja471:13.2": "Meṇḍo aṭṭhanakho adissamāno;",
"ja471:13.3": "Chādiyamāharatī ayaṃ imassa,",
"ja471:13.4": "Maṃsaṃ āharatī ayaṃ amussa.",
"ja471:14.1": "Pāsādavaragato videhaseṭṭho,",
"ja471:14.2": "Vitihāraṃ aññamaññabhojanānaṃ;",
"ja471:14.3": "Addakkhi kira sakkhikaṃ janindo,",
"ja471:14.4": "Bubhukkassa puṇṇaṃmukhassa cetaṃ”.",
"ja471:15.1": "“Lābhā vata me anapparūpā,",
"ja471:15.2": "Yassa medisā paṇḍitā kulamhi;",
"ja471:15.3": "Pañhassa gambhīragataṃ nipuṇamatthaṃ,",
"ja471:15.4": "Paṭivijjhanti subhāsitena dhīrā.",
"ja471:16.1": "Assatarirathañca ekamekaṃ,",
"ja471:16.2": "Phītaṃ gāmavarañca ekamekaṃ;",
"ja471:16.3": "Sabbesaṃ vo dammi paṇḍitānaṃ,",
"ja471:16.4": "Paramappatītamano subhāsitenā”ti.",
"ja471:17.1": "Meṇḍakapañhajātakaṃ aṭṭhamaṃ."
}