{
"ja542:1.1": "Jātaka",
"ja542:2.1": "Mahānipāta",
"ja542:3.1": "Mūgapakkhavagga",
"ja542:4.1": "5 Umaṅgajātaka",
"ja542:5.1": "“Pañcālo sabbasenāya,",
"ja542:5.2": "brahmadattoyamāgato;",
"ja542:5.3": "Sāyaṃ pañcāliyā senā,",
"ja542:5.4": "appameyyā mahosadha.",
"ja542:6.1": "Vīthimatī pattimatī,",
"ja542:6.2": "sabbasaṅgāmakovidā;",
"ja542:6.3": "Ohārinī saddavatī,",
"ja542:6.4": "bherisaṅkhappabodhanā.",
"ja542:7.1": "Lohavijjālaṅkārābhā,",
"ja542:7.2": "dhajinī vāmarohinī;",
"ja542:7.3": "Sippiyehi susampannā,",
"ja542:7.4": "sūrehi suppatiṭṭhitā.",
"ja542:8.1": "Dasettha paṇḍitā āhu,",
"ja542:8.2": "bhūripaññā rahogamā;",
"ja542:8.3": "Mātā ekādasī rañño,",
"ja542:8.4": "pañcāliyaṃ pasāsati.",
"ja542:9.1": "Athetthekasataṃ khatyā,",
"ja542:9.2": "anuyantā yasassino;",
"ja542:9.3": "Acchinnaraṭṭhā byathitā,",
"ja542:9.4": "pañcāliyaṃ vasaṃ gatā.",
"ja542:10.1": "Yaṃvadā takkarā rañño,",
"ja542:10.2": "akāmā piyabhāṇino;",
"ja542:10.3": "Pañcālamanuyāyanti,",
"ja542:10.4": "akāmā vasino gatā.",
"ja542:11.1": "Tāya senāya mithilā,",
"ja542:11.2": "tisandhiparivāritā;",
"ja542:11.3": "Rājadhānī videhānaṃ,",
"ja542:11.4": "samantā parikhaññati.",
"ja542:12.1": "Uddhaṃ tārakajātāva,",
"ja542:12.2": "samantā parivāritā;",
"ja542:12.3": "Mahosadha vijānāhi,",
"ja542:12.4": "kathaṃ mokkho bhavissati”.",
"ja542:13.1": "“Pāde deva pasārehi,",
"ja542:13.2": "bhuñja kāme ramassu ca;",
"ja542:13.3": "Hitvā pañcāliyaṃ senaṃ,",
"ja542:13.4": "brahmadatto palāyiti”.",
"ja542:14.1": "“Rājā santhavakāmo te,",
"ja542:14.2": "ratanāni pavecchati;",
"ja542:14.3": "Āgacchantu ito dūtā,",
"ja542:14.4": "mañjukā piyabhāṇino.",
"ja542:15.1": "Bhāsantu mudukā vācā,",
"ja542:15.2": "yā vācā paṭinanditā;",
"ja542:15.3": "Pañcālo ca videho ca,",
"ja542:15.4": "ubho ekā bhavantu te”.",
"ja542:16.1": "“Kathaṃ nu kevaṭṭa mahosadhena,",
"ja542:16.2": "Samāgamo āsi tadiṅgha brūhi;",
"ja542:16.3": "Kacci te paṭinijjhatto,",
"ja542:16.4": "Kacci tuṭṭho mahosadho”.",
"ja542:17.1": "“Anariyarūpo puriso janinda,",
"ja542:17.2": "Asammodako thaddho asabbhirūpo;",
"ja542:17.3": "Yathā mūgo ca badhiro ca,",
"ja542:17.4": "Na kiñcitthaṃ abhāsatha”.",
"ja542:18.1": "“Addhā idaṃ mantapadaṃ sududdasaṃ,",
"ja542:18.2": "Attho suddho naraviriyena diṭṭho;",
"ja542:18.3": "Tathā hi kāyo mama sampavedhati,",
"ja542:18.4": "Hitvā sayaṃ ko parahatthamessati”.",
"ja542:19.1": "“Channañhi ekāva matī sameti,",
"ja542:19.2": "Ye paṇḍitā uttamabhūripattā;",
"ja542:19.3": "Yānaṃ ayānaṃ atha vāpi ṭhānaṃ,",
"ja542:19.4": "Mahosadha tvampi matiṃ karohi”.",
"ja542:20.1": "“Jānāsi kho rāja mahānubhāvo,",
"ja542:20.2": "Mahabbalo cūḷanibrahmadatto;",
"ja542:20.3": "Rājā ca taṃ icchati māraṇatthaṃ,",
"ja542:20.4": "Migaṃ yathā okacarena luddo.",
"ja542:21.1": "Yathāpi maccho baḷisaṃ,",
"ja542:21.2": "vaṅkaṃ maṃsena chāditaṃ;",
"ja542:21.3": "Āmagiddho na jānāti,",
"ja542:21.4": "maccho maraṇamattano.",
"ja542:22.1": "Evameva tuvaṃ rāja,",
"ja542:22.2": "cūḷaneyyassa dhītaraṃ;",
"ja542:22.3": "Kāmagiddho na jānāsi,",
"ja542:22.4": "macchova maraṇamattano.",
"ja542:23.1": "Sace gacchasi pañcālaṃ,",
"ja542:23.2": "Khippamattaṃ jahissasi;",
"ja542:23.3": "Migaṃ panthānubandhaṃva,",
"ja542:23.4": "Mahantaṃ bhayamessati”.",
"ja542:24.1": "“Mayameva bālamhase eḷamūgā,",
"ja542:24.2": "Ye uttamatthāni tayī lapimhā;",
"ja542:24.3": "Kimeva tvaṃ naṅgalakoṭivaḍḍho,",
"ja542:24.4": "Atthāni jānāsi yathāpi aññe”.",
"ja542:25.1": "“Imaṃ gale gahetvāna,",
"ja542:25.2": "nāsetha vijitā mama;",
"ja542:25.3": "Yo me ratanalābhassa,",
"ja542:25.4": "antarāyāya bhāsati”.",
"ja542:26.1": "Tato ca so apakkamma,",
"ja542:26.2": "vedehassa upantikā;",
"ja542:26.3": "Atha āmantayī dūtaṃ,",
"ja542:26.4": "mādharaṃ suvapaṇḍitaṃ.",
"ja542:27.1": "“Ehi samma haritapakkha,",
"ja542:27.2": "veyyāvaccaṃ karohi me;",
"ja542:27.3": "Atthi pañcālarājassa,",
"ja542:27.4": "sāḷikā sayanapālikā.",
"ja542:28.1": "Taṃ bandhanena pucchassu,",
"ja542:28.2": "sā hi sabbassa kovidā;",
"ja542:28.3": "Sā tesaṃ sabbaṃ jānāti,",
"ja542:28.4": "rañño ca kosiyassa ca”.",
"ja542:29.1": "“Āmo”ti so paṭissutvā,",
"ja542:29.2": "mādharo suvapaṇḍito;",
"ja542:29.3": "Agamāsi haritapakkho,",
"ja542:29.4": "sāḷikāya upantikaṃ.",
"ja542:30.1": "Tato ca kho so gantvāna,",
"ja542:30.2": "mādharo suvapaṇḍito;",
"ja542:30.3": "Athāmantayi sugharaṃ,",
"ja542:30.4": "sāḷikaṃ mañjubhāṇikaṃ.",
"ja542:31.1": "“Kacci te sughare khamanīyaṃ,",
"ja542:31.2": "Kacci vesse anāmayaṃ;",
"ja542:31.3": "Kacci te madhunā lājā,",
"ja542:31.4": "Labbhate sughare tuvaṃ”.",
"ja542:32.1": "“Kusalañceva me samma,",
"ja542:32.2": "atho samma anāmayaṃ;",
"ja542:32.3": "Atho me madhunā lājā,",
"ja542:32.4": "labbhate suvapaṇḍita.",
"ja542:33.1": "Kuto nu samma āgamma,",
"ja542:33.2": "kassa vā pahito tuvaṃ;",
"ja542:33.3": "Na ca mesi ito pubbe,",
"ja542:33.4": "diṭṭho vā yadi vā suto”.",
"ja542:34.1": "“Ahosiṃ sivirājassa,",
"ja542:34.2": "pāsāde sayanapālako;",
"ja542:34.3": "Tato so dhammiko rājā,",
"ja542:34.4": "baddhe mocesi bandhanā.",
"ja542:35.1": "Tassa mekā dutiyāsi,",
"ja542:35.2": "sāḷikā mañjubhāṇikā;",
"ja542:35.3": "Taṃ tattha avadhī seno,",
"ja542:35.4": "pekkhato sughare mama.",
"ja542:36.1": "Tassā kāmā hi sammatto,",
"ja542:36.2": "āgatosmi tavantike;",
"ja542:36.3": "Sace kareyya okāsaṃ,",
"ja542:36.4": "ubhayova vasāmase”.",
"ja542:37.1": "“Suvova suviṃ kāmeyya,",
"ja542:37.2": "sāḷiko pana sāḷikaṃ;",
"ja542:37.3": "Suvassa sāḷikāyeva,",
"ja542:37.4": "saṃvāso hoti kīdiso”.",
"ja542:38.1": "“Yoyaṃ kāme kāmayati,",
"ja542:38.2": "api caṇḍālikāmapi;",
"ja542:38.3": "Sabbo hi sadiso hoti,",
"ja542:38.4": "natthi kāme asādiso”.",
"ja542:39.1": "“Atthi jampāvatī nāma,",
"ja542:39.2": "mātā sivissa rājino;",
"ja542:39.3": "Sā bhariyā vāsudevassa,",
"ja542:39.4": "kaṇhassa mahesī piyā.",
"ja542:40.1": "Raṭṭhavatī kimpurisī,",
"ja542:40.2": "sāpi vacchaṃ akāmayi;",
"ja542:40.3": "Manusso migiyā saddhiṃ,",
"ja542:40.4": "natthi kāme asādiso.",
"ja542:41.1": "Handa khvāhaṃ gamissāmi,",
"ja542:41.2": "sāḷike mañjubhāṇike;",
"ja542:41.3": "Paccakkhānupadañhetaṃ,",
"ja542:41.4": "atimaññasi nūna maṃ”.",
"ja542:42.1": "“Na sirī taramānassa,",
"ja542:42.2": "mādhara suvapaṇḍita;",
"ja542:42.3": "Idheva tāva acchassu,",
"ja542:42.4": "yāva rājāna dakkhasi;",
"ja542:42.5": "Sossi saddaṃ mudiṅgānaṃ,",
"ja542:42.6": "ānubhāvañca rājino”.",
"ja542:43.1": "“Yo nu khvāyaṃ tibbo saddo,",
"ja542:43.2": "tirojanapade suto;",
"ja542:43.3": "Dhītā pañcālarājassa,",
"ja542:43.4": "osadhī viya vaṇṇinī;",
"ja542:43.5": "Taṃ dassati videhānaṃ,",
"ja542:43.6": "so vivāho bhavissati”.",
"ja542:44.1": "“Ediso mā amittānaṃ,",
"ja542:44.2": "vivāho hotu mādhara;",
"ja542:44.3": "Yathā pañcālarājassa,",
"ja542:44.4": "vedehena bhavissati.",
"ja542:45.1": "Ānayitvāna vedehaṃ,",
"ja542:45.2": "pañcālānaṃ rathesabho;",
"ja542:45.3": "Tato naṃ ghātayissati,",
"ja542:45.4": "nassa sakhī bhavissati”.",
"ja542:46.1": "“Handa kho maṃ anujānāhi,",
"ja542:46.2": "rattiyo sattamattiyo;",
"ja542:46.3": "Yāvāhaṃ sivirājassa,",
"ja542:46.4": "ārocemi mahesino;",
"ja542:46.5": "Laddho ca me āvasatho,",
"ja542:46.6": "sāḷikāya upantikaṃ”.",
"ja542:47.1": "“Handa kho taṃ anujānāmi,",
"ja542:47.2": "rattiyo sattamattiyo;",
"ja542:47.3": "Sace tvaṃ sattarattena,",
"ja542:47.4": "nāgacchasi mamantike;",
"ja542:47.5": "Maññe okkantasattaṃ maṃ,",
"ja542:47.6": "matāya āgamissasi”.",
"ja542:48.1": "Tato ca kho so gantvāna,",
"ja542:48.2": "mādharo suvapaṇḍito;",
"ja542:48.3": "Mahosadhassa akkhāsi,",
"ja542:48.4": "sāḷikāvacanaṃ idaṃ.",
"ja542:49.1": "“Yasseva ghare bhuñjeyya bhogaṃ,",
"ja542:49.2": "Tasseva atthaṃ puriso careyya;",
"ja542:49.3": "Handāhaṃ gacchāmi pure janinda,",
"ja542:49.4": "Pañcālarājassa puraṃ surammaṃ;",
"ja542:49.5": "Nivesanāni māpetuṃ,",
"ja542:49.6": "Vedehassa yasassino.",
"ja542:50.1": "Nivesanāni māpetvā,",
"ja542:50.2": "vedehassa yasassino;",
"ja542:50.3": "Yadā te pahiṇeyyāmi,",
"ja542:50.4": "tadā eyyāsi khattiya”.",
"ja542:51.1": "Tato ca pāyāsi pure mahosadho,",
"ja542:51.2": "Pañcālarājassa puraṃ surammaṃ;",
"ja542:51.3": "Nivesanāni māpetuṃ,",
"ja542:51.4": "Vedehassa yasassino.",
"ja542:52.1": "Nivesanāni māpetvā,",
"ja542:52.2": "vedehassa yasassino;",
"ja542:52.3": "Athassa pāhiṇī dūtaṃ,",
"ja542:52.4": "vedehaṃ mithilaggahaṃ;",
"ja542:52.5": "“Ehi dāni mahārāja,",
"ja542:52.6": "māpitaṃ te nivesanaṃ”.",
"ja542:53.1": "Tato ca rājā pāyāsi,",
"ja542:53.2": "senāya caturaṅgiyā;",
"ja542:53.3": "Anantavāhanaṃ daṭṭhuṃ,",
"ja542:53.4": "phītaṃ kapiliyaṃ puraṃ.",
"ja542:54.1": "Tato ca kho so gantvāna,",
"ja542:54.2": "brahmadattassa pāhiṇi;",
"ja542:54.3": "“Āgatosmi mahārāja,",
"ja542:54.4": "tava pādāni vandituṃ.",
"ja542:55.1": "Dadāhi dāni me bhariyaṃ,",
"ja542:55.2": "nāriṃ sabbaṅgasobhiniṃ;",
"ja542:55.3": "Suvaṇṇena paṭicchannaṃ,",
"ja542:55.4": "dāsīgaṇapurakkhataṃ”.",
"ja542:56.1": "“Svāgataṃ teva vedeha,",
"ja542:56.2": "atho te adurāgataṃ;",
"ja542:56.3": "Nakkhattaṃyeva paripuccha,",
"ja542:56.4": "ahaṃ kaññaṃ dadāmi te;",
"ja542:56.5": "Suvaṇṇena paṭicchannaṃ,",
"ja542:56.6": "dāsīgaṇapurakkhataṃ”.",
"ja542:57.1": "Tato ca rājā vedeho,",
"ja542:57.2": "nakkhattaṃ paripucchatha;",
"ja542:57.3": "Nakkhattaṃ paripucchitvā,",
"ja542:57.4": "brahmadattassa pāhiṇi.",
"ja542:58.1": "“Dadāhi dāni me bhariyaṃ,",
"ja542:58.2": "nāriṃ sabbaṅgasobhiniṃ;",
"ja542:58.3": "Suvaṇṇena paṭicchannaṃ,",
"ja542:58.4": "dāsīgaṇapurakkhataṃ”.",
"ja542:59.1": "“Dadāmi dāni te bhariyaṃ,",
"ja542:59.2": "nāriṃ sabbaṅgasobhiniṃ;",
"ja542:59.3": "Suvaṇṇena paṭicchannaṃ,",
"ja542:59.4": "dāsīgaṇapurakkhataṃ”.",
"ja542:60.1": "“Hatthī assā rathā pattī,",
"ja542:60.2": "senā tiṭṭhanti vammitā;",
"ja542:60.3": "Ukkā padittā jhāyanti,",
"ja542:60.4": "kiṃ nu maññanti paṇḍitā.",
"ja542:61.1": "Hatthī assā rathā pattī,",
"ja542:61.2": "senā tiṭṭhanti vammitā;",
"ja542:61.3": "Ukkā padittā jhāyanti,",
"ja542:61.4": "kiṃ nu kāhanti paṇḍita”.",
"ja542:62.1": "“Rakkhati taṃ mahārāja,",
"ja542:62.2": "cūḷaneyyo mahabbalo;",
"ja542:62.3": "Paduṭṭho brahmadattena,",
"ja542:62.4": "pāto taṃ ghātayissati”.",
"ja542:63.1": "“Ubbedhati me hadayaṃ,",
"ja542:63.2": "mukhañca parisussati;",
"ja542:63.3": "Nibbutiṃ nādhigacchāmi,",
"ja542:63.4": "aggidaḍḍhova ātape.",
"ja542:64.1": "Kammārānaṃ yathā ukkā,",
"ja542:64.2": "anto jhāyati no bahi;",
"ja542:64.3": "Evampi hadayaṃ mayhaṃ,",
"ja542:64.4": "anto jhāyati no bahi”.",
"ja542:65.1": "“Pamatto mantanātīto,",
"ja542:65.2": "bhinnamantosi khattiya;",
"ja542:65.3": "Idāni kho taṃ tāyantu,",
"ja542:65.4": "paṇḍitā mantino janā.",
"ja542:66.1": "Akatvāmaccassa vacanaṃ,",
"ja542:66.2": "atthakāmahitesino;",
"ja542:66.3": "Attapītirato rājā,",
"ja542:66.4": "migo kūṭeva ohito.",
"ja542:67.1": "Yathāpi maccho baḷisaṃ,",
"ja542:67.2": "vaṅkaṃ maṃsena chāditaṃ;",
"ja542:67.3": "Āmagiddho na jānāti,",
"ja542:67.4": "maccho maraṇamattano.",
"ja542:68.1": "Evameva tuvaṃ rāja,",
"ja542:68.2": "cūḷaneyyassa dhītaraṃ;",
"ja542:68.3": "Kāmagiddho na jānāsi,",
"ja542:68.4": "macchova maraṇamattano.",
"ja542:69.1": "Sace gacchasi pañcālaṃ,",
"ja542:69.2": "khippamattaṃ jahissasi;",
"ja542:69.3": "Migaṃ panthānubandhaṃva,",
"ja542:69.4": "mahantaṃ bhayamessati.",
"ja542:70.1": "Anariyarūpo puriso janinda,",
"ja542:70.2": "Ahīva ucchaṅgagato ḍaseyya;",
"ja542:70.3": "Na tena mittiṃ kayirātha dhīro,",
"ja542:70.4": "Dukkho have kāpurisena saṅgamo.",
"ja542:71.1": "Yadeva jaññā purisaṃ janinda,",
"ja542:71.2": "Sīlavāyaṃ bahussuto;",
"ja542:71.3": "Teneva mittiṃ kayirātha dhīro,",
"ja542:71.4": "Sukho have sappurisena saṅgamo.",
"ja542:72.1": "Bālo tuvaṃ eḷamūgosi rāja,",
"ja542:72.2": "Yo uttamatthāni mayī lapittho;",
"ja542:72.3": "Kimevahaṃ naṅgalakoṭivaḍḍho,",
"ja542:72.4": "Atthāni jānāmi yathāpi aññe.",
"ja542:73.1": "Imaṃ gale gahetvāna,",
"ja542:73.2": "nāsetha vijitā mama;",
"ja542:73.3": "Yo me ratanalābhassa,",
"ja542:73.4": "antarāyāya bhāsati”.",
"ja542:74.1": "“Mahosadha atītena,",
"ja542:74.2": "Nānuvijjhanti paṇḍitā;",
"ja542:74.3": "Kiṃ maṃ assaṃva sambaddhaṃ,",
"ja542:74.4": "Patodeneva vijjhasi.",
"ja542:75.1": "Sace passasi mokkhaṃ vā,",
"ja542:75.2": "khemaṃ vā pana passasi;",
"ja542:75.3": "Teneva maṃ anusāsa,",
"ja542:75.4": "kiṃ atītena vijjhasi”.",
"ja542:76.1": "“Atītaṃ mānusaṃ kammaṃ,",
"ja542:76.2": "Dukkaraṃ durabhisambhavaṃ;",
"ja542:76.3": "Na taṃ sakkomi mocetuṃ,",
"ja542:76.4": "Tvaṃ pajānassu khattiya.",
"ja542:77.1": "Santi vehāyasā nāgā,",
"ja542:77.2": "iddhimanto yasassino;",
"ja542:77.3": "Tepi ādāya gaccheyyuṃ,",
"ja542:77.4": "yassa honti tathāvidhā.",
"ja542:78.1": "Santi vehāyasā assā,",
"ja542:78.2": "iddhimanto yasassino;",
"ja542:78.3": "Tepi ādāya gaccheyyuṃ,",
"ja542:78.4": "yassa honti tathāvidhā.",
"ja542:79.1": "Santi vehāyasā pakkhī,",
"ja542:79.2": "iddhimanto yasassino;",
"ja542:79.3": "Tepi ādāya gaccheyyuṃ,",
"ja542:79.4": "yassa honti tathāvidhā.",
"ja542:80.1": "Santi vehāyasā yakkhā,",
"ja542:80.2": "iddhimanto yasassino;",
"ja542:80.3": "Tepi ādāya gaccheyyuṃ,",
"ja542:80.4": "yassa honti tathāvidhā.",
"ja542:81.1": "Atītaṃ mānusaṃ kammaṃ,",
"ja542:81.2": "Dukkaraṃ durabhisambhavaṃ;",
"ja542:81.3": "Na taṃ sakkomi mocetuṃ,",
"ja542:81.4": "Antalikkhena khattiya”.",
"ja542:82.1": "“Atīradassī puriso,",
"ja542:82.2": "mahante udakaṇṇave;",
"ja542:82.3": "Yattha so labhate gādhaṃ,",
"ja542:82.4": "tattha so vindate sukhaṃ.",
"ja542:83.1": "Evaṃ amhañca rañño ca,",
"ja542:83.2": "tvaṃ patiṭṭhā mahosadha;",
"ja542:83.3": "Tvaṃ nosi mantinaṃ seṭṭho,",
"ja542:83.4": "amhe dukkhā pamocaya”.",
"ja542:84.1": "“Atītaṃ mānusaṃ kammaṃ,",
"ja542:84.2": "Dukkaraṃ durabhisambhavaṃ;",
"ja542:84.3": "Na taṃ sakkomi mocetuṃ,",
"ja542:84.4": "Tvaṃ pajānassu senaka”.",
"ja542:85.1": "“Suṇohi metaṃ vacanaṃ,",
"ja542:85.2": "Passa senaṃ mahabbhayaṃ;",
"ja542:85.3": "Senakaṃ dāni pucchāmi,",
"ja542:85.4": "Kiṃ kiccaṃ idha maññasi”.",
"ja542:86.1": "“Aggiṃ vā dvārato dema,",
"ja542:86.2": "gaṇhāmase vikantanaṃ;",
"ja542:86.3": "Aññamaññaṃ vadhitvāna,",
"ja542:86.4": "khippaṃ hissāma jīvitaṃ;",
"ja542:86.5": "Mā no rājā brahmadatto,",
"ja542:86.6": "ciraṃ dukkhena mārayi”.",
"ja542:87.1": "“Suṇohi metaṃ vacanaṃ,",
"ja542:87.2": "passa senaṃ mahabbhayaṃ;",
"ja542:87.3": "Pukkusaṃ dāni pucchāmi,",
"ja542:87.4": "kiṃ kiccaṃ idha maññasi”.",
"ja542:88.1": "“Visaṃ khāditvā miyyāma,",
"ja542:88.2": "khippaṃ hissāma jīvitaṃ;",
"ja542:88.3": "Mā no rājā brahmadatto,",
"ja542:88.4": "ciraṃ dukkhena mārayi”.",
"ja542:89.1": "“Suṇohi metaṃ vacanaṃ,",
"ja542:89.2": "passa senaṃ mahabbhayaṃ;",
"ja542:89.3": "Kāmindaṃ dāni pucchāmi,",
"ja542:89.4": "kiṃ kiccaṃ idha maññasi”.",
"ja542:90.1": "“Rajjuyā bajjha miyyāma,",
"ja542:90.2": "papātā papatāmase;",
"ja542:90.3": "Mā no rājā brahmadatto,",
"ja542:90.4": "ciraṃ dukkhena mārayi”.",
"ja542:91.1": "“Suṇohi metaṃ vacanaṃ,",
"ja542:91.2": "passa senaṃ mahabbhayaṃ;",
"ja542:91.3": "Devindaṃ dāni pucchāmi,",
"ja542:91.4": "kiṃ kiccaṃ idha maññasi”.",
"ja542:92.1": "“Aggiṃ vā dvārato dema,",
"ja542:92.2": "gaṇhāmase vikantanaṃ;",
"ja542:92.3": "Aññamaññaṃ vadhitvāna,",
"ja542:92.4": "khippaṃ hissāma jīvitaṃ;",
"ja542:92.5": "Na no sakkoti mocetuṃ,",
"ja542:92.6": "sukheneva mahosadho”.",
"ja542:93.1": "“Yathā kadalino sāraṃ,",
"ja542:93.2": "anvesaṃ nādhigacchati;",
"ja542:93.3": "Evaṃ anvesamānā naṃ,",
"ja542:93.4": "pañhaṃ najjhagamāmase.",
"ja542:94.1": "Yathā simbalino sāraṃ,",
"ja542:94.2": "anvesaṃ nādhigacchati;",
"ja542:94.3": "Evaṃ anvesamānā naṃ,",
"ja542:94.4": "pañhaṃ najjhagamāmase.",
"ja542:95.1": "Adese vata no vuṭṭhaṃ,",
"ja542:95.2": "kuñjarānaṃvanodake;",
"ja542:95.3": "Sakāse dummanussānaṃ,",
"ja542:95.4": "bālānaṃ avijānataṃ.",
"ja542:96.1": "Ubbedhati me hadayaṃ,",
"ja542:96.2": "mukhañca parisussati;",
"ja542:96.3": "Nibbutiṃ nādhigacchāmi,",
"ja542:96.4": "aggidaḍḍhova ātape.",
"ja542:97.1": "Kammārānaṃ yathā ukkā,",
"ja542:97.2": "anto jhāyati no bahi;",
"ja542:97.3": "Evampi hadayaṃ mayhaṃ,",
"ja542:97.4": "anto jhāyati no bahi”.",
"ja542:98.1": "Tato so paṇḍito dhīro,",
"ja542:98.2": "atthadassī mahosadho;",
"ja542:98.3": "Vedehaṃ dukkhitaṃ disvā,",
"ja542:98.4": "idaṃ vacanamabravi.",
"ja542:99.1": "“Mā tvaṃ bhāyi mahārāja,",
"ja542:99.2": "mā tvaṃ bhāyi rathesabha;",
"ja542:99.3": "Ahaṃ taṃ mocayissāmi,",
"ja542:99.4": "rāhuggahaṃva candimaṃ.",
"ja542:100.1": "Mā tvaṃ bhāyi mahārāja,",
"ja542:100.2": "mā tvaṃ bhāyi rathesabha;",
"ja542:100.3": "Ahaṃ taṃ mocayissāmi,",
"ja542:100.4": "rāhuggahaṃva sūriyaṃ.",
"ja542:101.1": "Mā tvaṃ bhāyi mahārāja,",
"ja542:101.2": "mā tvaṃ bhāyi rathesabha;",
"ja542:101.3": "Ahaṃ taṃ mocayissāmi,",
"ja542:101.4": "paṅke sannaṃva kuñjaraṃ.",
"ja542:102.1": "Mā tvaṃ bhāyi mahārāja,",
"ja542:102.2": "mā tvaṃ bhāyi rathesabha;",
"ja542:102.3": "Ahaṃ taṃ mocayissāmi,",
"ja542:102.4": "peḷābaddhaṃva pannagaṃ.",
"ja542:103.1": "Mā tvaṃ bhāyi mahārāja,",
"ja542:103.2": "mā tvaṃ bhāyi rathesabha;",
"ja542:103.3": "Ahaṃ taṃ mocayissāmi,",
"ja542:103.4": "pakkhiṃ baddhaṃva pañjare.",
"ja542:104.1": "Mā tvaṃ bhāyi mahārāja,",
"ja542:104.2": "mā tvaṃ bhāyi rathesabha;",
"ja542:104.3": "Ahaṃ taṃ mocayissāmi,",
"ja542:104.4": "macche jālagateriva.",
"ja542:105.1": "Mā tvaṃ bhāyi mahārāja,",
"ja542:105.2": "mā tvaṃ bhāyi rathesabha;",
"ja542:105.3": "Ahaṃ taṃ mocayissāmi,",
"ja542:105.4": "sayoggabalavāhanaṃ.",
"ja542:106.1": "Mā tvaṃ bhāyi mahārāja,",
"ja542:106.2": "mā tvaṃ bhāyi rathesabha;",
"ja542:106.3": "Pañcālaṃ vāhayissāmi,",
"ja542:106.4": "kākasenaṃva leḍḍunā.",
"ja542:107.1": "Adu paññā kimatthiyā,",
"ja542:107.2": "Amacco vāpi tādiso;",
"ja542:107.3": "Yo taṃ sambādhapakkhandaṃ,",
"ja542:107.4": "Dukkhā na parimocaye”.",
"ja542:108.1": "“Etha māṇavā uṭṭhetha,",
"ja542:108.2": "mukhaṃ sodhetha sandhino;",
"ja542:108.3": "Vedeho sahamaccehi,",
"ja542:108.4": "umaṅgena gamissati”.",
"ja542:109.1": "Tassa taṃ vacanaṃ sutvā,",
"ja542:109.2": "paṇḍitassānucārino;",
"ja542:109.3": "Umaṅgadvāraṃ vivariṃsu,",
"ja542:109.4": "yantayutte ca aggaḷe.",
"ja542:110.1": "Purato senako yāti,",
"ja542:110.2": "pacchato ca mahosadho;",
"ja542:110.3": "Majjhe ca rājā vedeho,",
"ja542:110.4": "amaccaparivārito.",
"ja542:111.1": "Umaṅgā nikkhamitvāna,",
"ja542:111.2": "vedeho nāvamāruhi;",
"ja542:111.3": "Abhirūḷhañca taṃ ñatvā,",
"ja542:111.4": "anusāsi mahosadho.",
"ja542:112.1": "“Ayaṃ te sasuro deva,",
"ja542:112.2": "ayaṃ sassu janādhipa;",
"ja542:112.3": "Yathā mātu paṭipatti,",
"ja542:112.4": "evaṃ te hotu sassuyā.",
"ja542:113.1": "Yathāpi niyako bhātā,",
"ja542:113.2": "Saudariyo ekamātuko;",
"ja542:113.3": "Evaṃ pañcālacando te,",
"ja542:113.4": "Dayitabbo rathesabha.",
"ja542:114.1": "Ayaṃ pañcālacandī te,",
"ja542:114.2": "rājaputtī abhicchitā;",
"ja542:114.3": "Kāmaṃ karohi te tāya,",
"ja542:114.4": "bhariyā te rathesabha”.",
"ja542:115.1": "“Āruyha nāvaṃ taramāno,",
"ja542:115.2": "kiṃ nu tīramhi tiṭṭhasi;",
"ja542:115.3": "Kicchā muttāmha dukkhato,",
"ja542:115.4": "yāma dāni mahosadha”.",
"ja542:116.1": "“Nesa dhammo mahārāja,",
"ja542:116.2": "yohaṃ senāya nāyako;",
"ja542:116.3": "Senaṅgaṃ parihāpetvā,",
"ja542:116.4": "attānaṃ parimocaye.",
"ja542:117.1": "Nivesanamhi te deva,",
"ja542:117.2": "senaṅgaṃ parihāpitaṃ;",
"ja542:117.3": "Taṃ dinnaṃ brahmadattena,",
"ja542:117.4": "ānayissaṃ rathesabha”.",
"ja542:118.1": "“Appaseno mahāsenaṃ,",
"ja542:118.2": "kathaṃ viggayha ṭhassasi;",
"ja542:118.3": "Dubbalo balavantena,",
"ja542:118.4": "vihaññissasi paṇḍita”.",
"ja542:119.1": "“Appasenopi ce mantī,",
"ja542:119.2": "mahāsenaṃ amantinaṃ;",
"ja542:119.3": "Jināti rājā rājāno,",
"ja542:119.4": "ādiccovudayaṃ tamaṃ”.",
"ja542:120.1": "“Susukhaṃ vata saṃvāso,",
"ja542:120.2": "paṇḍitehīti senaka;",
"ja542:120.3": "Pakkhīva pañjare baddhe,",
"ja542:120.4": "macche jālagateriva;",
"ja542:120.5": "Amittahatthattagate,",
"ja542:120.6": "mocayī no mahosadho”.",
"ja542:121.1": "“Evametaṃ mahārāja,",
"ja542:121.2": "paṇḍitā hi sukhāvahā;",
"ja542:121.3": "Pakkhīva pañjare baddhe,",
"ja542:121.4": "macche jālagateriva;",
"ja542:121.5": "Amittahatthattagate,",
"ja542:121.6": "mocayī no mahosadho”.",
"ja542:122.1": "Rakkhitvā kasiṇaṃ rattiṃ,",
"ja542:122.2": "cūḷaneyyo mahabbalo;",
"ja542:122.3": "Udentaṃ aruṇuggasmiṃ,",
"ja542:122.4": "upakāriṃ upāgami.",
"ja542:123.1": "Āruyha pavaraṃ nāgaṃ,",
"ja542:123.2": "balavantaṃ saṭṭhihāyanaṃ;",
"ja542:123.3": "Rājā avoca pañcālo,",
"ja542:123.4": "cūḷaneyyo mahabbalo.",
"ja542:124.1": "Sannaddho maṇivammena,",
"ja542:124.2": "saramādāya pāṇinā;",
"ja542:124.3": "Pesiye ajjhabhāsittha,",
"ja542:124.4": "puthugumbe samāgate.",
"ja542:125.1": "Hatthārohe anīkaṭṭhe,",
"ja542:125.2": "rathike pattikārake;",
"ja542:125.3": "Upāsanamhi katahatthe,",
"ja542:125.4": "vālavedhe samāgate.",
"ja542:126.1": "“Pesetha kuñjare dantī,",
"ja542:126.2": "balavante saṭṭhihāyane;",
"ja542:126.3": "Maddantu kuñjarā nagaraṃ,",
"ja542:126.4": "vedehena sumāpitaṃ.",
"ja542:127.1": "Vacchadantamukhā setā,",
"ja542:127.2": "tikkhaggā aṭṭhivedhino;",
"ja542:127.3": "Paṇunnā dhanuvegena,",
"ja542:127.4": "sampatantutarītarā.",
"ja542:128.1": "Māṇavā vammino sūrā,",
"ja542:128.2": "citradaṇḍayutāvudhā;",
"ja542:128.3": "Pakkhandino mahānāgā,",
"ja542:128.4": "hatthīnaṃ hontu sammukhā.",
"ja542:129.1": "Sattiyo teladhotāyo,",
"ja542:129.2": "accimantā pabhassarā;",
"ja542:129.3": "Vijjotamānā tiṭṭhantu,",
"ja542:129.4": "sataraṃsīva tārakā.",
"ja542:130.1": "Āvudhabalavantānaṃ,",
"ja542:130.2": "guṇikāyūradhārinaṃ;",
"ja542:130.3": "Etādisānaṃ yodhānaṃ,",
"ja542:130.4": "saṅgāme apalāyinaṃ;",
"ja542:130.5": "Vedeho kuto muccissati,",
"ja542:130.6": "sace pakkhīva kāhiti.",
"ja542:131.1": "Tiṃsa me purisanāvutyo,",
"ja542:131.2": "sabbevekekaniccitā;",
"ja542:131.3": "Yesaṃ samaṃ na passāmi,",
"ja542:131.4": "kevalaṃ mahimaṃ caraṃ.",
"ja542:132.1": "Nāgā ca kappitā dantī,",
"ja542:132.2": "balavanto saṭṭhihāyanā;",
"ja542:132.3": "Yesaṃ khandhesu sobhanti,",
"ja542:132.4": "kumārā cārudassanā.",
"ja542:133.1": "Pītālaṅkārā pītavasanā,",
"ja542:133.2": "Pītuttaranivāsanā;",
"ja542:133.3": "Nāgakhandhesu sobhanti,",
"ja542:133.4": "Devaputtāva nandane.",
"ja542:134.1": "Pāṭhīnavaṇṇā nettiṃsā,",
"ja542:134.2": "teladhotā pabhassarā;",
"ja542:134.3": "Niṭṭhitā naradhīrehi,",
"ja542:134.4": "samadhārā sunissitā.",
"ja542:135.1": "Vellālino vītamalā,",
"ja542:135.2": "sikkāyasamayā daḷā;",
"ja542:135.3": "Gahitā balavantehi,",
"ja542:135.4": "suppahārappahāribhi.",
"ja542:136.1": "Suvaṇṇatharusampannā,",
"ja542:136.2": "lohitakacchupadhāritā;",
"ja542:136.3": "Vivattamānā sobhanti,",
"ja542:136.4": "vijjuvabbhaghanantare.",
"ja542:137.1": "Paṭākā vammino sūrā,",
"ja542:137.2": "asicammassa kovidā;",
"ja542:137.3": "Dhanuggahā sikkhitarā,",
"ja542:137.4": "nāgakhandhe nipātino.",
"ja542:138.1": "Etādisehi parikkhitto,",
"ja542:138.2": "natthi mokkho ito tava;",
"ja542:138.3": "Pabhāvaṃ te na passāmi,",
"ja542:138.4": "yena tvaṃ mithilaṃ vaje”.",
"ja542:139.1": "“Kiṃ nu santaramānova,",
"ja542:139.2": "nāgaṃ pesesi kuñjaraṃ;",
"ja542:139.3": "Pahaṭṭharūpo āpatasi,",
"ja542:139.4": "siddhatthosmīti maññasi.",
"ja542:140.1": "Oharetaṃ dhanuṃ cāpaṃ,",
"ja542:140.2": "khurappaṃ paṭisaṃhara;",
"ja542:140.3": "Oharetaṃ subhaṃ vammaṃ,",
"ja542:140.4": "veḷuriyamaṇisanthataṃ”.",
"ja542:141.1": "“Pasannamukhavaṇṇosi,",
"ja542:141.2": "mitapubbañca bhāsasi;",
"ja542:141.3": "Hoti kho maraṇakāle,",
"ja542:141.4": "edisī vaṇṇasampadā”.",
"ja542:142.1": "“Moghaṃ te gajjitaṃ rāja,",
"ja542:142.2": "bhinnamantosi khattiya;",
"ja542:142.3": "Duggaṇhosi tayā rājā,",
"ja542:142.4": "khaḷuṅkeneva sindhavo.",
"ja542:143.1": "Tiṇṇo hiyyo rājā gaṅgaṃ,",
"ja542:143.2": "sāmacco saparijjano;",
"ja542:143.3": "Haṃsarājaṃ yathā dhaṅko,",
"ja542:143.4": "anujjavaṃ patissasi.",
"ja542:144.1": "Siṅgālā rattibhāgena,",
"ja542:144.2": "phullaṃ disvāna kiṃsukaṃ;",
"ja542:144.3": "Maṃsapesīti maññantā,",
"ja542:144.4": "paribyūḷhā migādhamā.",
"ja542:145.1": "Vītivattāsu rattīsu,",
"ja542:145.2": "uggatasmiṃ divākare;",
"ja542:145.3": "Kiṃsukaṃ phullitaṃ disvā,",
"ja542:145.4": "āsacchinnā migādhamā.",
"ja542:146.1": "Evameva tuvaṃ rāja,",
"ja542:146.2": "vedehaṃ parivāriya;",
"ja542:146.3": "Āsacchinno gamissasi,",
"ja542:146.4": "siṅgālā kiṃsukaṃ yathā”.",
"ja542:147.1": "“Imassa hatthe pāde ca,",
"ja542:147.2": "kaṇṇanāsañca chindatha;",
"ja542:147.3": "Yo me amittaṃ hatthagataṃ,",
"ja542:147.4": "vedehaṃ parimocayi.",
"ja542:148.1": "Imaṃ maṃsaṃva pātabyaṃ,",
"ja542:148.2": "sūle katvā pacantu naṃ;",
"ja542:148.3": "Yo me amittaṃ hatthagataṃ,",
"ja542:148.4": "vedehaṃ parimocayi.",
"ja542:149.1": "Yathāpi āsabhaṃ cammaṃ,",
"ja542:149.2": "pathabyā vitaniyyati;",
"ja542:149.3": "Sīhassa atho byagghassa,",
"ja542:149.4": "hoti saṅkusamāhataṃ.",
"ja542:150.1": "Evaṃ taṃ vitanitvāna,",
"ja542:150.2": "vedhayissāmi sattiyā;",
"ja542:150.3": "Yo me amittaṃ hatthagataṃ,",
"ja542:150.4": "vedehaṃ parimocayi”.",
"ja542:151.1": "“Sace me hatthe pāde ca,",
"ja542:151.2": "kaṇṇanāsañca checchasi;",
"ja542:151.3": "Evaṃ pañcālacandassa,",
"ja542:151.4": "vedeho chedayissati.",
"ja542:152.1": "Sace me hatthe pāde ca,",
"ja542:152.2": "kaṇṇanāsañca checchasi;",
"ja542:152.3": "Evaṃ pañcālacandiyā,",
"ja542:152.4": "vedeho chedayissati.",
"ja542:153.1": "Sace me hatthe pāde ca,",
"ja542:153.2": "kaṇṇanāsañca checchasi;",
"ja542:153.3": "Evaṃ nandāya deviyā,",
"ja542:153.4": "vedeho chedayissati.",
"ja542:154.1": "Sace me hatthe pāde ca,",
"ja542:154.2": "kaṇṇanāsañca checchasi;",
"ja542:154.3": "Evaṃ te puttadārassa,",
"ja542:154.4": "vedeho chedayissati.",
"ja542:155.1": "Sace maṃsaṃva pātabyaṃ,",
"ja542:155.2": "sūle katvā pacissasi;",
"ja542:155.3": "Evaṃ pañcālacandassa,",
"ja542:155.4": "vedeho pācayissati.",
"ja542:156.1": "Sace maṃsaṃva pātabyaṃ,",
"ja542:156.2": "sūle katvā pacissasi;",
"ja542:156.3": "Evaṃ pañcālacandiyā,",
"ja542:156.4": "vedeho pācayissati.",
"ja542:157.1": "Sace maṃsaṃva pātabyaṃ,",
"ja542:157.2": "sūle katvā pacissasi;",
"ja542:157.3": "Evaṃ nandāya deviyā,",
"ja542:157.4": "vedeho pācayissati.",
"ja542:158.1": "Sace maṃsaṃva pātabyaṃ,",
"ja542:158.2": "sūle katvā pacissasi;",
"ja542:158.3": "Evaṃ te puttadārassa,",
"ja542:158.4": "vedeho pācayissati.",
"ja542:159.1": "Sace maṃ vitanitvāna,",
"ja542:159.2": "vedhayissasi sattiyā;",
"ja542:159.3": "Evaṃ pañcālacandassa,",
"ja542:159.4": "vedeho vedhayissati.",
"ja542:160.1": "Sace maṃ vitanitvāna,",
"ja542:160.2": "vedhayissasi sattiyā;",
"ja542:160.3": "Evaṃ pañcālacandiyā,",
"ja542:160.4": "vedeho vedhayissati.",
"ja542:161.1": "Sace maṃ vitanitvāna,",
"ja542:161.2": "vedhayissasi sattiyā;",
"ja542:161.3": "Evaṃ nandāya deviyā,",
"ja542:161.4": "vedeho vedhayissati.",
"ja542:162.1": "Sace maṃ vitanitvāna,",
"ja542:162.2": "vedhayissasi sattiyā;",
"ja542:162.3": "Evaṃ te puttadārassa,",
"ja542:162.4": "vedeho vedhayissati;",
"ja542:162.5": "Evaṃ no mantitaṃ raho,",
"ja542:162.6": "vedehena mayā saha.",
"ja542:163.1": "Yathāpi palasataṃ cammaṃ,",
"ja542:163.2": "kontimantāsuniṭṭhitaṃ;",
"ja542:163.3": "Upeti tanutāṇāya,",
"ja542:163.4": "sarānaṃ paṭihantave.",
"ja542:164.1": "Sukhāvaho dukkhanudo,",
"ja542:164.2": "vedehassa yasassino;",
"ja542:164.3": "Matiṃ te paṭihaññāmi,",
"ja542:164.4": "usuṃ palasatena vā.",
"ja542:165.1": "Iṅgha passa mahārāja,",
"ja542:165.2": "suññaṃ antepuraṃ tava;",
"ja542:165.3": "Orodhā ca kumārā ca,",
"ja542:165.4": "tava mātā ca khattiya;",
"ja542:165.5": "Umaṅgā nīharitvāna,",
"ja542:165.6": "vedehassupanāmitā”.",
"ja542:166.1": "“Iṅgha antepuraṃ mayhaṃ,",
"ja542:166.2": "gantvāna vicinātha naṃ;",
"ja542:166.3": "Yathā imassa vacanaṃ,",
"ja542:166.4": "saccaṃ vā yadi vā musā”.",
"ja542:167.1": "“Evametaṃ mahārāja,",
"ja542:167.2": "yathā āha mahosadho;",
"ja542:167.3": "Suññaṃ antepuraṃ sabbaṃ,",
"ja542:167.4": "kākapaṭṭanakaṃ yathā”.",
"ja542:168.1": "“Ito gatā mahārāja,",
"ja542:168.2": "nārī sabbaṅgasobhanā;",
"ja542:168.3": "Kosambaphalakasussoṇī,",
"ja542:168.4": "haṃsagaggarabhāṇinī.",
"ja542:169.1": "Ito nītā mahārāja,",
"ja542:169.2": "nārī sabbaṅgasobhanā;",
"ja542:169.3": "Koseyyavasanā sāmā,",
"ja542:169.4": "jātarūpasumekhalā.",
"ja542:170.1": "Surattapādā kalyāṇī,",
"ja542:170.2": "suvaṇṇamaṇimekhalā;",
"ja542:170.3": "Pārevatakkhī sutanū,",
"ja542:170.4": "bimboṭṭhā tanumajjhimā.",
"ja542:171.1": "Sujātā bhujalaṭṭhīva,",
"ja542:171.2": "vedīva tanumajjhimā;",
"ja542:171.3": "Dīghassā kesā asitā,",
"ja542:171.4": "īsakaggapavellitā.",
"ja542:172.1": "Sujātā migachāpāva,",
"ja542:172.2": "hemantaggisikhāriva;",
"ja542:172.3": "Nadīva giriduggesu,",
"ja542:172.4": "sañchannā khuddaveḷubhi.",
"ja542:173.1": "Nāganāsūru kalyāṇī,",
"ja542:173.2": "paramā timbarutthanī;",
"ja542:173.3": "Nātidīghā nātirassā,",
"ja542:173.4": "nālomā nātilomasā”.",
"ja542:174.1": "“Nandāya nūna maraṇena,",
"ja542:174.2": "nandasi sirivāhana;",
"ja542:174.3": "Ahañca nūna nandā ca,",
"ja542:174.4": "gacchāma yamasādhanaṃ”.",
"ja542:175.1": "“Dibbaṃ adhīyase māyaṃ,",
"ja542:175.2": "akāsi cakkhumohanaṃ;",
"ja542:175.3": "Yo me amittaṃ hatthagataṃ,",
"ja542:175.4": "vedehaṃ parimocayi”.",
"ja542:176.1": "“Adhīyanti mahārāja,",
"ja542:176.2": "dibbamāyidha paṇḍitā;",
"ja542:176.3": "Te mocayanti attānaṃ,",
"ja542:176.4": "paṇḍitā mantino janā.",
"ja542:177.1": "Santi māṇavaputtā me,",
"ja542:177.2": "kusalā sandhichedakā;",
"ja542:177.3": "Yesaṃ katena maggena,",
"ja542:177.4": "vedeho mithilaṃ gato”.",
"ja542:178.1": "“Iṅgha passa mahārāja,",
"ja542:178.2": "Umaṅgaṃ sādhu māpitaṃ;",
"ja542:178.3": "Hatthīnaṃ atha assānaṃ,",
"ja542:178.4": "Rathānaṃ atha pattinaṃ;",
"ja542:178.5": "Ālokabhūtaṃ tiṭṭhantaṃ,",
"ja542:178.6": "Umaṅgaṃ sādhu māpitaṃ”.",
"ja542:179.1": "“Lābhā vata videhānaṃ,",
"ja542:179.2": "yassimedisā paṇḍitā;",
"ja542:179.3": "Ghare vasanti vijite,",
"ja542:179.4": "yathā tvaṃsi mahosadha”.",
"ja542:180.1": "“Vuttiñca parihārañca,",
"ja542:180.2": "diguṇaṃ bhattavetanaṃ;",
"ja542:180.3": "Dadāmi vipule bhoge,",
"ja542:180.4": "bhuñja kāme ramassu ca;",
"ja542:180.5": "Mā videhaṃ paccagamā,",
"ja542:180.6": "kiṃ videho karissati”.",
"ja542:181.1": "“Yo cajetha mahārāja,",
"ja542:181.2": "bhattāraṃ dhanakāraṇā;",
"ja542:181.3": "Ubhinnaṃ hoti gārayho,",
"ja542:181.4": "attano ca parassa ca;",
"ja542:181.5": "Yāva jīveyya vedeho,",
"ja542:181.6": "nāññassa puriso siyā.",
"ja542:182.1": "Yo cajetha mahārāja,",
"ja542:182.2": "bhattāraṃ dhanakāraṇā;",
"ja542:182.3": "Ubhinnaṃ hoti gārayho,",
"ja542:182.4": "attano ca parassa ca;",
"ja542:182.5": "Yāva tiṭṭheyya vedeho,",
"ja542:182.6": "nāññassa vijite vase”.",
"ja542:183.1": "“Dammi nikkhasahassaṃ te,",
"ja542:183.2": "gāmāsītiñca kāsisu;",
"ja542:183.3": "Dāsisatāni cattāri,",
"ja542:183.4": "dammi bhariyāsatañca te;",
"ja542:183.5": "Sabbaṃ senaṅgamādāya,",
"ja542:183.6": "sotthiṃ gaccha mahosadha.",
"ja542:184.1": "Yāva dadantu hatthīnaṃ,",
"ja542:184.2": "assānaṃ diguṇaṃ vidhaṃ;",
"ja542:184.3": "Tappentu annapānena,",
"ja542:184.4": "rathike pattikārake.",
"ja542:185.1": "Hatthī asse rathe pattī,",
"ja542:185.2": "gacchevādāya paṇḍita;",
"ja542:185.3": "Passatu taṃ mahārājā,",
"ja542:185.4": "vedeho mithilaṃ gataṃ”.",
"ja542:186.1": "“Hatthī assā rathā pattī,",
"ja542:186.2": "senā padissate mahā;",
"ja542:186.3": "Caturaṅginī bhīsarūpā,",
"ja542:186.4": "kiṃ nu maññasi paṇḍita”.",
"ja542:187.1": "“Ānando te mahārāja,",
"ja542:187.2": "uttamo paṭidissati;",
"ja542:187.3": "Sabbaṃ senaṅgamādāya,",
"ja542:187.4": "sotthiṃ patto mahosadho”.",
"ja542:188.1": "“Yathā petaṃ susānasmiṃ,",
"ja542:188.2": "chaḍḍetvā caturo janā;",
"ja542:188.3": "Evaṃ kapilaye tyamha,",
"ja542:188.4": "chaḍḍayitvā idhāgatā.",
"ja542:189.1": "Atha tvaṃ kena vaṇṇena,",
"ja542:189.2": "kena vā pana hetunā;",
"ja542:189.3": "Kena vā atthajātena,",
"ja542:189.4": "attānaṃ parimocayi”.",
"ja542:190.1": "“Atthaṃ atthena vedeha,",
"ja542:190.2": "mantaṃ mantena khattiya;",
"ja542:190.3": "Parivārayiṃ rājānaṃ,",
"ja542:190.4": "jambudīpaṃva sāgaro”.",
"ja542:191.1": "“Dinnaṃ nikkhasahassaṃ me,",
"ja542:191.2": "gāmāsīti ca kāsisu;",
"ja542:191.3": "Dāsīsatāni cattāri,",
"ja542:191.4": "dinnaṃ bhariyāsatañca me;",
"ja542:191.5": "Sabbaṃ senaṅgamādāya,",
"ja542:191.6": "sotthināmhi idhāgato”.",
"ja542:192.1": "“Susukhaṃ vata saṃvāso,",
"ja542:192.2": "paṇḍitehīti senaka;",
"ja542:192.3": "Pakkhīva pañjare baddhe,",
"ja542:192.4": "macche jālagateriva;",
"ja542:192.5": "Amittahatthattagate,",
"ja542:192.6": "mocayī no mahosadho”.",
"ja542:193.1": "“Evametaṃ mahārāja,",
"ja542:193.2": "paṇḍitā hi sukhāvahā;",
"ja542:193.3": "Pakkhīva pañjare baddhe,",
"ja542:193.4": "macche jālagateriva;",
"ja542:193.5": "Amittahatthattagate,",
"ja542:193.6": "mocayī no mahosadho”.",
"ja542:194.1": "“Āhaññantu sabbavīṇā,",
"ja542:194.2": "bheriyo dindimāni ca;",
"ja542:194.3": "Dhamentu māgadhā saṅkhā,",
"ja542:194.4": "vaggū nadantu dundubhī”.",
"ja542:195.1": "Orodhā ca kumārā ca,",
"ja542:195.2": "vesiyānā ca brāhmaṇā;",
"ja542:195.3": "Bahuṃ annañca pānañca,",
"ja542:195.4": "paṇḍitassābhihārayuṃ.",
"ja542:196.1": "Hatthārohā anīkaṭṭhā,",
"ja542:196.2": "rathikā pattikārakā;",
"ja542:196.3": "Bahuṃ annañca pānañca,",
"ja542:196.4": "paṇḍitassābhihārayuṃ.",
"ja542:197.1": "Samāgatā jānapadā,",
"ja542:197.2": "negamā ca samāgatā;",
"ja542:197.3": "Bahuṃ annañca pānañca,",
"ja542:197.4": "paṇḍitassābhihārayuṃ.",
"ja542:198.1": "Bahujano pasannosi,",
"ja542:198.2": "disvā paṇḍitamāgataṃ;",
"ja542:198.3": "Paṇḍitamhi anuppatte,",
"ja542:198.4": "celukkhepo avattathāti.",
"ja542:199.1": "Umaṅgajātakaṃ pañcamaṃ."
}