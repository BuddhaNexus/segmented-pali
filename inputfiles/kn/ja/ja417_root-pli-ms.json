{
  "ja417:0.1": "Jātaka ",
  "ja417:0.2": "Aṭṭhakanipāta ",
  "ja417:0.3": "Kaccānivagga ",
  "ja417:0.4": "1. Kaccānijātaka ",
  "ja417:1.1": "“Odātavatthā suci allakesā, ",
  "ja417:1.2": "Kaccāni kiṁ kumbhimadhissayitvā; ",
  "ja417:1.3": "Piṭṭhā tilā dhovasi taṇḍulāni, ",
  "ja417:1.4": "Tilodano hehiti kissahetu”. ",
  "ja417:2.1": "“Na kho ayaṁ brāhmaṇa bhojanatthā, ",
  "ja417:2.2": "Tilodano hehiti sādhupakko; ",
  "ja417:2.3": "Dhammo mato tassa pahuttamajja, ",
  "ja417:2.4": "Ahaṁ karissāmi susānamajjhe”. ",
  "ja417:3.1": "“Anuvicca kaccāni karohi kiccaṁ, ",
  "ja417:3.2": "Dhammo mato ko nu taveva saṁsi; ",
  "ja417:3.3": "Sahassanetto atulānubhāvo, ",
  "ja417:3.4": "Na miyyatī dhammavaro kadāci”. ",
  "ja417:4.1": "“Daḷhappamāṇaṁ mama ettha brahme, ",
  "ja417:4.2": "Dhammo mato natthi mamettha kaṅkhā; ",
  "ja417:4.3": "Yeyeva dāni pāpā bhavanti, ",
  "ja417:4.4": "Te teva dāni sukhitā bhavanti. ",
  "ja417:5.1": "Suṇisā hi mayhaṁ vañjhā ahosi, ",
  "ja417:5.2": "Sā maṁ vadhitvāna vijāyi puttaṁ; ",
  "ja417:5.3": "Sā dāni sabbassa kulassa issarā, ",
  "ja417:5.4": "Ahaṁ panamhi apaviddhā ekikā”. ",
  "ja417:6.1": "“Jīvāmi vohaṁ na matohamasmi, ",
  "ja417:6.2": "Taveva atthāya idhāgatosmi; ",
  "ja417:6.3": "Yā taṁ vadhitvāna vijāyi puttaṁ, ",
  "ja417:6.4": "Sahāva puttena karomi bhasmaṁ”. ",
  "ja417:7.1": "“Evañca te ruccati devarāja, ",
  "ja417:7.2": "Mameva atthāya idhāgatosi; ",
  "ja417:7.3": "Ahañca putto suṇisā ca nattā, ",
  "ja417:7.4": "Sammodamānā gharamāvasema”. ",
  "ja417:8.1": "“Evañca te ruccati kātiyāni, ",
  "ja417:8.2": "Hatāpi santā na jahāsi dhammaṁ; ",
  "ja417:8.3": "Tuvañca putto suṇisā ca nattā, ",
  "ja417:8.4": "Sammodamānā gharamāvasetha. ",
  "ja417:9.1": "Sā kātiyānī suṇisāya saddhiṁ, ",
  "ja417:9.2": "Sammodamānā gharamāvasittha; ",
  "ja417:9.3": "Putto ca nattā ca upaṭṭhahiṁsu, ",
  "ja417:9.4": "Devānamindena adhiggahītā”ti. ",
  "ja417:10.1": "Kaccānijātakaṁ paṭhamaṁ. "
}