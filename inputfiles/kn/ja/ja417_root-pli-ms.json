{
"ja417:1.1": "Jātaka",
"ja417:2.1": "Aṭṭhakanipāta",
"ja417:3.1": "Kaccānivagga",
"ja417:4.1": "1. Kaccānijātaka",
"ja417:5.1": "“Odātavatthā suci allakesā,",
"ja417:5.2": "Kaccāni kiṃ kumbhimadhissayitvā;",
"ja417:5.3": "Piṭṭhā tilā dhovasi taṇḍulāni,",
"ja417:5.4": "Tilodano hehiti kissahetu”.",
"ja417:6.1": "“Na kho ayaṃ brāhmaṇa bhojanatthā,",
"ja417:6.2": "Tilodano hehiti sādhupakko;",
"ja417:6.3": "Dhammo mato tassa pahuttamajja,",
"ja417:6.4": "Ahaṃ karissāmi susānamajjhe”.",
"ja417:7.1": "“Anuvicca kaccāni karohi kiccaṃ,",
"ja417:7.2": "Dhammo mato ko nu taveva saṃsi;",
"ja417:7.3": "Sahassanetto atulānubhāvo,",
"ja417:7.4": "Na miyyatī dhammavaro kadāci”.",
"ja417:8.1": "“Daḷhappamāṇaṃ mama ettha brahme,",
"ja417:8.2": "Dhammo mato natthi mamettha kaṅkhā;",
"ja417:8.3": "Yeyeva dāni pāpā bhavanti,",
"ja417:8.4": "Te teva dāni sukhitā bhavanti.",
"ja417:9.1": "Suṇisā hi mayhaṃ vañjhā ahosi,",
"ja417:9.2": "Sā maṃ vadhitvāna vijāyi puttaṃ;",
"ja417:9.3": "Sā dāni sabbassa kulassa issarā,",
"ja417:9.4": "Ahaṃ panamhi apaviddhā ekikā”.",
"ja417:10.1": "“Jīvāmi vohaṃ na matohamasmi,",
"ja417:10.2": "Taveva atthāya idhāgatosmi;",
"ja417:10.3": "Yā taṃ vadhitvāna vijāyi puttaṃ,",
"ja417:10.4": "Sahāva puttena karomi bhasmaṃ”.",
"ja417:11.1": "“Evañca te ruccati devarāja,",
"ja417:11.2": "Mameva atthāya idhāgatosi;",
"ja417:11.3": "Ahañca putto suṇisā ca nattā,",
"ja417:11.4": "Sammodamānā gharamāvasema”.",
"ja417:12.1": "“Evañca te ruccati kātiyāni,",
"ja417:12.2": "Hatāpi santā na jahāsi dhammaṃ;",
"ja417:12.3": "Tuvañca putto suṇisā ca nattā,",
"ja417:12.4": "Sammodamānā gharamāvasetha.",
"ja417:13.1": "Sā kātiyānī suṇisāya saddhiṃ,",
"ja417:13.2": "Sammodamānā gharamāvasittha;",
"ja417:13.3": "Putto ca nattā ca upaṭṭhahiṃsu,",
"ja417:13.4": "Devānamindena adhiggahītā”ti.",
"ja417:14.1": "Kaccānijātakaṃ paṭhamaṃ."
}