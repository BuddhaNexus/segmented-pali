{
"ja421:1.1": "Jātaka",
"ja421:2.1": "Aṭṭhakanipāta",
"ja421:3.1": "Kaccānivagga",
"ja421:4.1": "5. Gaṅgamālajātaka",
"ja421:5.1": "“Aṅgārajātā pathavī,",
"ja421:5.2": "kukkuḷānugatā mahī;",
"ja421:5.3": "Atha gāyasi vattāni,",
"ja421:5.4": "na taṃ tapati ātapo.",
"ja421:6.1": "Uddhaṃ tapati ādicco,",
"ja421:6.2": "adho tapati vālukā;",
"ja421:6.3": "Atha gāyasi vattāni,",
"ja421:6.4": "na taṃ tapati ātapo”.",
"ja421:7.1": "“Na maṃ tapati ātapo,",
"ja421:7.2": "ātapā tapayanti maṃ;",
"ja421:7.3": "Atthā hi vividhā rāja,",
"ja421:7.4": "te tapanti na ātapo”.",
"ja421:8.1": "“Addasaṃ kāma te mūlaṃ,",
"ja421:8.2": "saṅkappā kāma jāyasi;",
"ja421:8.3": "Na taṃ saṅkappayissāmi,",
"ja421:8.4": "evaṃ kāma na hehisi”.",
"ja421:9.1": "“Appāpi kāmā na alaṃ,",
"ja421:9.2": "bahūhipi na tappati;",
"ja421:9.3": "Ahahā bālalapanā,",
"ja421:9.4": "parivajjetha jaggato”.",
"ja421:10.1": "“Appassa kammassa phalaṃ mamedaṃ,",
"ja421:10.2": "Udayo ajjhāgamā mahattapattaṃ;",
"ja421:10.3": "Suladdhalābho vata māṇavassa,",
"ja421:10.4": "Yo pabbajī kāmarāgaṃ pahāya”.",
"ja421:11.1": "“Tapasā pajahanti pāpakammaṃ,",
"ja421:11.2": "Tapasā nhāpitakumbhakārabhāvaṃ;",
"ja421:11.3": "Tapasā abhibhuyya gaṅgamāla,",
"ja421:11.4": "Nāmenālapasajja brahmadattaṃ”.",
"ja421:12.1": "“Sandiṭṭhikameva ‘amma’ passatha,",
"ja421:12.2": "Khantīsoraccassa ayaṃ vipāko;",
"ja421:12.3": "Yo sabbajanassa vanditohu,",
"ja421:12.4": "Taṃ vandāma sarājikā samaccā”.",
"ja421:13.1": "“Mā kiñci avacuttha gaṅgamālaṃ,",
"ja421:13.2": "Muninaṃ monapathesu sikkhamānaṃ;",
"ja421:13.3": "Eso hi atari aṇṇavaṃ,",
"ja421:13.4": "Yaṃ taritvā caranti vītasokā”ti.",
"ja421:14.1": "Gaṅgamālajātakaṃ pañcamaṃ."
}