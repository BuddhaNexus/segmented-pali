{
"ja337:1.1": "Jātaka",
"ja337:2.1": "Catukkanipāta",
"ja337:3.1": "Kokilavagga",
"ja337:4.1": "7. Pīṭhajātaka",
"ja337:5.1": "“Na te pīṭhamadāyimhā,",
"ja337:5.2": "na pānaṃ napi bhojanaṃ;",
"ja337:5.3": "Brahmacāri khamassu me,",
"ja337:5.4": "etaṃ passāmi accayaṃ”.",
"ja337:6.1": "“Nevābhisajjāmi na cāpi kuppe,",
"ja337:6.2": "Na cāpi me appiyamāsi kiñci;",
"ja337:6.3": "Athopi me āsi manovitakko,",
"ja337:6.4": "Etādiso nūna kulassa dhammo”.",
"ja337:7.1": "“Esasmākaṃ kule dhammo,",
"ja337:7.2": "pitupitāmaho sadā;",
"ja337:7.3": "Āsanaṃ udakaṃ pajjaṃ,",
"ja337:7.4": "sabbetaṃ nipadāmase.",
"ja337:8.1": "Esasmākaṃ kule dhammo,",
"ja337:8.2": "pitupitāmaho sadā;",
"ja337:8.3": "Sakkaccaṃ upatiṭṭhāma,",
"ja337:8.4": "uttamaṃ viya ñātakan”ti.",
"ja337:9.1": "Pīṭhajātakaṃ sattamaṃ."
}