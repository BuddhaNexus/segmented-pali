{
"ja487:1.1": "Jātaka",
"ja487:2.1": "Pakiṇṇakanipāta",
"ja487:3.1": "Sālikedāravagga",
"ja487:4.1": "4. Uddālakajātaka",
"ja487:5.1": "“Kharājinā jaṭilā paṅkadantā,",
"ja487:5.2": "Dummakkharūpā ye mantaṃ jappanti;",
"ja487:5.3": "Kaccinnu te mānusake payoge,",
"ja487:5.4": "Idaṃ vidū parimuttā apāyā”.",
"ja487:6.1": "“Pāpāni kammāni karetha rāja,",
"ja487:6.2": "Bahussuto ce na careyya dhammaṃ;",
"ja487:6.3": "Sahassavedopi na taṃ paṭicca,",
"ja487:6.4": "Dukkhā pamucce caraṇaṃ apatvā”.",
"ja487:7.1": "“Sahassavedopi na taṃ paṭicca,",
"ja487:7.2": "Dukkhā pamucce caraṇaṃ apatvā;",
"ja487:7.3": "Maññāmi vedā aphalā bhavanti,",
"ja487:7.4": "Sasaṃyamaṃ caraṇaññeva saccaṃ”.",
"ja487:8.1": "“Na heva vedā aphalā bhavanti,",
"ja487:8.2": "Sasaṃyamaṃ caraṇaññeva saccaṃ;",
"ja487:8.3": "Kittiñhi pappoti adhicca vede,",
"ja487:8.4": "Santiṃ puṇāti caraṇena danto”.",
"ja487:9.1": "“Bhaccā mātā pitā bandhū,",
"ja487:9.2": "yena jāto sayeva so;",
"ja487:9.3": "Uddālako ahaṃ bhoto,",
"ja487:9.4": "sottiyākulavaṃsako”.",
"ja487:10.1": "“Kathaṃ bho brāhmaṇo hoti,",
"ja487:10.2": "kathaṃ bhavati kevalī;",
"ja487:10.3": "Kathañca parinibbānaṃ,",
"ja487:10.4": "dhammaṭṭho kinti vuccati”.",
"ja487:11.1": "“Niraṃkatvā aggimādāya brāhmaṇo,",
"ja487:11.2": "Āpo siñcaṃ yajaṃ usseti yūpaṃ;",
"ja487:11.3": "Evaṃkaro brāhmaṇo hoti khemī,",
"ja487:11.4": "Dhamme ṭhitaṃ tena amāpayiṃsu”.",
"ja487:12.1": "“Na suddhi secanenatthi,",
"ja487:12.2": "nāpi kevalī brāhmaṇo;",
"ja487:12.3": "Na khantī nāpi soraccaṃ,",
"ja487:12.4": "nāpi so parinibbuto”.",
"ja487:13.1": "“Kathaṃ so brāhmaṇo hoti,",
"ja487:13.2": "kathaṃ bhavati kevalī;",
"ja487:13.3": "Kathañca parinibbānaṃ,",
"ja487:13.4": "dhammaṭṭho kinti vuccati”.",
"ja487:14.1": "“Akhettabandhū amamo nirāso,",
"ja487:14.2": "Nillobhapāpo bhavalobhakhīṇo;",
"ja487:14.3": "Evaṃkaro brāhmaṇo hoti khemī,",
"ja487:14.4": "Dhamme ṭhitaṃ tena amāpayiṃsu”.",
"ja487:15.1": "“Khattiyā brāhmaṇā vessā,",
"ja487:15.2": "suddā caṇḍālapukkusā;",
"ja487:15.3": "Sabbeva soratā dantā,",
"ja487:15.4": "sabbeva parinibbutā;",
"ja487:15.5": "Sabbesaṃ sītibhūtānaṃ,",
"ja487:15.6": "atthi seyyotha pāpiyo”.",
"ja487:16.1": "“Khattiyā brāhmaṇā vessā,",
"ja487:16.2": "suddā caṇḍālapukkusā;",
"ja487:16.3": "Sabbeva soratā dantā,",
"ja487:16.4": "sabbeva parinibbutā;",
"ja487:16.5": "Sabbesaṃ sītibhūtānaṃ,",
"ja487:16.6": "natthi seyyotha pāpiyo”.",
"ja487:17.1": "“Khattiyā brāhmaṇā vessā,",
"ja487:17.2": "suddā caṇḍālapukkusā;",
"ja487:17.3": "Sabbeva soratā dantā,",
"ja487:17.4": "sabbeva parinibbutā.",
"ja487:18.1": "Sabbesaṃ sītibhūtānaṃ,",
"ja487:18.2": "Natthi seyyotha pāpiyo;",
"ja487:18.3": "Panatthaṃ carasi brahmaññaṃ,",
"ja487:18.4": "Sottiyākulavaṃsataṃ”.",
"ja487:19.1": "“Nānārattehi vatthehi,",
"ja487:19.2": "vimānaṃ bhavati chāditaṃ;",
"ja487:19.3": "Na tesaṃ chāyā vatthānaṃ,",
"ja487:19.4": "so rāgo anupajjatha.",
"ja487:20.1": "Evameva manussesu,",
"ja487:20.2": "yadā sujjhanti māṇavā;",
"ja487:20.3": "Te sajātiṃ pamuñcanti,",
"ja487:20.4": "dhammamaññāya subbatā”ti.",
"ja487:21.1": "Uddālakajātakaṃ catutthaṃ."
}