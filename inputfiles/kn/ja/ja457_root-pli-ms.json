{
"ja457:1.1": "Jātaka",
"ja457:2.1": "Ekādasakanipāta",
"ja457:3.1": "Mātuposakavagga",
"ja457:4.1": "3. Dhammadevaputtajātaka",
"ja457:5.1": "“Yasokaro puññakarohamasmi,",
"ja457:5.2": "Sadātthuto samaṇabrāhmaṇānaṃ;",
"ja457:5.3": "Maggāraho devamanussapūjito,",
"ja457:5.4": "Dhammo ahaṃ dehi adhamma maggaṃ”.",
"ja457:6.1": "“Adhammayānaṃ daḷhamāruhitvā,",
"ja457:6.2": "Asantasanto balavāhamasmi;",
"ja457:6.3": "Sa kissa hetumhi tavajja dajjaṃ,",
"ja457:6.4": "Maggaṃ ahaṃ dhamma adinnapubbaṃ”.",
"ja457:7.1": "“Dhammo have pāturahosi pubbe,",
"ja457:7.2": "Pacchā adhammo udapādi loke;",
"ja457:7.3": "Jeṭṭho ca seṭṭho ca sanantano ca,",
"ja457:7.4": "Uyyāhi jeṭṭhassa kaniṭṭha maggā”.",
"ja457:8.1": "“Na yācanāya napi pātirūpā,",
"ja457:8.2": "Na arahatā tehaṃ dadeyyaṃ maggaṃ;",
"ja457:8.3": "Yuddhañca no hotu ubhinnamajja,",
"ja457:8.4": "Yuddhamhi yo jessati tassa maggo”.",
"ja457:9.1": "“Sabbā disā anuvisaṭohamasmi,",
"ja457:9.2": "Mahabbalo amitayaso atulyo;",
"ja457:9.3": "Guṇehi sabbehi upetarūpo,",
"ja457:9.4": "Dhammo adhamma tvaṃ kathaṃ vijessasi.",
"ja457:10.1": "Lohena ve haññati jātarūpaṃ,",
"ja457:10.2": "Na jātarūpena hananti lohaṃ;",
"ja457:10.3": "Sace adhammo hañchati dhammamajja,",
"ja457:10.4": "Ayo suvaṇṇaṃ viya dassaneyyaṃ.",
"ja457:11.1": "Sace tuvaṃ yuddhabalo adhamma,",
"ja457:11.2": "Na tuyha vuḍḍhā ca garū ca atthi;",
"ja457:11.3": "Maggañca te dammi piyāppiyena,",
"ja457:11.4": "Vācāduruttānipi te khamāmi”.",
"ja457:12.1": "“Idañca sutvā vacanaṃ adhammo,",
"ja457:12.2": "Avaṃsiro patito uddhapādo;",
"ja457:12.3": "‘Yuddhatthiko ce na labhāmi yuddhaṃ’,",
"ja457:12.4": "Ettāvatā hoti hato adhammo.",
"ja457:13.1": "Khantībalo yuddhabalaṃ vijetvā,",
"ja457:13.2": "Hantvā adhammaṃ nihanitva bhūmyā;",
"ja457:13.3": "Pāyāsi vitto abhiruyha sandanaṃ,",
"ja457:13.4": "Maggeneva atibalo saccanikkamo.",
"ja457:14.1": "Mātā pitā samaṇabrāhmaṇā ca,",
"ja457:14.2": "Asammānitā yassa sake agāre;",
"ja457:14.3": "Idheva nikkhippa sarīradehaṃ,",
"ja457:14.4": "Kāyassa bhedā nirayaṃ vajanti te;",
"ja457:14.5": "Yathā adhammo patito avaṃsiro.",
"ja457:15.1": "Mātā pitā samaṇabrāhmaṇā ca,",
"ja457:15.2": "Susammānitā yassa sake agāre;",
"ja457:15.3": "Idheva nikkhippa sarīradehaṃ,",
"ja457:15.4": "Kāyassa bhedā sugatiṃ vajanti te;",
"ja457:15.5": "Yathāpi dhammo abhiruyha sandanan”ti.",
"ja457:16.1": "Dhammadevaputtajātakaṃ tatiyaṃ."
}