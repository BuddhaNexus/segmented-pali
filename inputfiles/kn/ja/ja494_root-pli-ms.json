{
"ja494:1.1": "Jātaka",
"ja494:2.1": "Pakiṇṇakanipāta",
"ja494:3.1": "Sālikedāravagga",
"ja494:4.1": "11. Sādhinajātaka",
"ja494:5.1": "“Abbhuto vata lokasmiṃ,",
"ja494:5.2": "uppajji lomahaṃsano;",
"ja494:5.3": "Dibbo ratho pāturahu,",
"ja494:5.4": "vedehassa yasassino”.",
"ja494:6.1": "Devaputto mahiddhiko,",
"ja494:6.2": "mātali devasārathi;",
"ja494:6.3": "Nimantayittha rājānaṃ,",
"ja494:6.4": "vedehaṃ mithilaggahaṃ.",
"ja494:7.1": "“Ehimaṃ rathamāruyha,",
"ja494:7.2": "rājaseṭṭha disampati;",
"ja494:7.3": "Devā dassanakāmā te,",
"ja494:7.4": "tāvatiṃsā saindakā;",
"ja494:7.5": "Saramānā hi te devā,",
"ja494:7.6": "sudhammāyaṃ samacchare”.",
"ja494:8.1": "Tato ca rājā sādhino,",
"ja494:8.2": "vedeho mithilaggaho;",
"ja494:8.3": "Sahassayuttamāruyha,",
"ja494:8.4": "agā devāna santike;",
"ja494:8.5": "Taṃ devā paṭinandiṃsu,",
"ja494:8.6": "disvā rājānamāgataṃ.",
"ja494:9.1": "“Svāgataṃ te mahārāja,",
"ja494:9.2": "atho te adurāgataṃ;",
"ja494:9.3": "Nisīda dāni rājīsi,",
"ja494:9.4": "devarājassa santike”.",
"ja494:10.1": "Sakkopi paṭinandittha,",
"ja494:10.2": "vedehaṃ mithilaggahaṃ;",
"ja494:10.3": "Nimantayittha kāmehi,",
"ja494:10.4": "āsanena ca vāsavo.",
"ja494:11.1": "“Sādhu khosi anuppatto,",
"ja494:11.2": "āvāsaṃ vasavattinaṃ;",
"ja494:11.3": "Vasa devesu rājīsi,",
"ja494:11.4": "sabbakāmasamiddhisu;",
"ja494:11.5": "Tāvatiṃsesu devesu,",
"ja494:11.6": "bhuñja kāme amānuse”.",
"ja494:12.1": "“Ahaṃ pure saggagato ramāmi,",
"ja494:12.2": "Naccehi gītehi ca vāditehi;",
"ja494:12.3": "So dāni ajja na ramāmi sagge,",
"ja494:12.4": "Āyuṃ nu khīṇo maraṇaṃ nu santike;",
"ja494:12.5": "Udāhu mūḷhosmi janindaseṭṭha”.",
"ja494:13.1": "“Na tāyu khīṇaṃ maraṇañca dūre,",
"ja494:13.2": "Na cāpi mūḷho naravīraseṭṭha;",
"ja494:13.3": "Tuyhañca puññāni parittakāni,",
"ja494:13.4": "Yesaṃ vipākaṃ idha vedayittho.",
"ja494:14.1": "Vasa devānubhāvena,",
"ja494:14.2": "rājaseṭṭha disampati;",
"ja494:14.3": "Tāvatiṃsesu devesu,",
"ja494:14.4": "bhuñja kāme amānuse”.",
"ja494:15.1": "“Yathā yācitakaṃ yānaṃ,",
"ja494:15.2": "yathā yācitakaṃ dhanaṃ;",
"ja494:15.3": "Evaṃsampadamevetaṃ,",
"ja494:15.4": "yaṃ parato dānapaccayā.",
"ja494:16.1": "Na cāhametamicchāmi,",
"ja494:16.2": "yaṃ parato dānapaccayā;",
"ja494:16.3": "Sayaṃkatāni puññāni,",
"ja494:16.4": "taṃ me āveṇikaṃ dhanaṃ.",
"ja494:17.1": "Sohaṃ gantvā manussesu,",
"ja494:17.2": "kāhāmi kusalaṃ bahuṃ;",
"ja494:17.3": "Dānena samacariyāya,",
"ja494:17.4": "saṃyamena damena ca;",
"ja494:17.5": "Yaṃ katvā sukhito hoti,",
"ja494:17.6": "na ca pacchānutappati.",
"ja494:18.1": "Imāni tāni khettāni,",
"ja494:18.2": "imaṃ nikkhaṃ sukuṇḍalaṃ;",
"ja494:18.3": "Imā tā haritānūpā,",
"ja494:18.4": "imā najjo savantiyo.",
"ja494:19.1": "Imā tā pokkharaṇī rammā,",
"ja494:19.2": "cakkavākapakūjitā;",
"ja494:19.3": "Mandālakehi sañchannā,",
"ja494:19.4": "padumuppalakehi ca;",
"ja494:19.5": "Yassimāni mamāyiṃsu,",
"ja494:19.6": "kiṃ nu te disataṃ gatā.",
"ja494:20.1": "Tānīdha khettāni so bhūmibhāgo,",
"ja494:20.2": "Teyeva ārāmavanūpacārā;",
"ja494:20.3": "Tameva mayhaṃ janataṃ apassato,",
"ja494:20.4": "Suññaṃva me nārada khāyate disā”.",
"ja494:21.1": "“Diṭṭhā mayā vimānāni,",
"ja494:21.2": "obhāsentā catuddisā;",
"ja494:21.3": "Sammukhā devarājassa,",
"ja494:21.4": "tidasānañca sammukhā.",
"ja494:22.1": "Vutthaṃ me bhavanaṃ dibyaṃ,",
"ja494:22.2": "Bhuttā kāmā amānusā;",
"ja494:22.3": "Tāvatiṃsesu devesu,",
"ja494:22.4": "Sabbakāmasamiddhisu.",
"ja494:23.1": "Sohaṃ etādisaṃ hitvā,",
"ja494:23.2": "puññāyamhi idhāgato;",
"ja494:23.3": "Dhammameva carissāmi,",
"ja494:23.4": "nāhaṃ rajjena atthiko.",
"ja494:24.1": "Adaṇḍāvacaraṃ maggaṃ,",
"ja494:24.2": "sammāsambuddhadesitaṃ;",
"ja494:24.3": "Taṃ maggaṃ paṭipajjissaṃ,",
"ja494:24.4": "yena gacchanti subbatā”ti.",
"ja494:25.1": "Sādhinajātakaṃ ekādasamaṃ."
}