{
  "ja407:0.1": "Jātaka ",
  "ja407:0.2": "Sattakanipāta ",
  "ja407:0.3": "Gandhāravagga ",
  "ja407:0.4": "2. Mahākapijātaka ",
  "ja407:1.1": "“Attānaṁ saṅkamaṁ katvā, ",
  "ja407:1.2": "Yo sotthiṁ samatārayi; ",
  "ja407:1.3": "Kiṁ tvaṁ tesaṁ kime tuyhaṁ, ",
  "ja407:1.4": "Honti ete mahākapi”. ",
  "ja407:2.1": "“Rājāhaṁ issaro tesaṁ, ",
  "ja407:2.2": "yūthassa parihārako; ",
  "ja407:2.3": "Tesaṁ sokaparetānaṁ, ",
  "ja407:2.4": "bhītānaṁ te arindama. ",
  "ja407:3.1": "Ullaṅghayitvā attānaṁ, ",
  "ja407:3.2": "vissaṭṭhadhanuno sataṁ; ",
  "ja407:3.3": "Tato aparapādesu, ",
  "ja407:3.4": "daḷhaṁ bandhaṁ latāguṇaṁ. ",
  "ja407:4.1": "Chinnabbhamiva vātena, ",
  "ja407:4.2": "Nuṇṇo rukkhaṁ upāgamiṁ; ",
  "ja407:4.3": "Sohaṁ appabhavaṁ tattha, ",
  "ja407:4.4": "Sākhaṁ hatthehi aggahiṁ. ",
  "ja407:5.1": "Taṁ maṁ viyāyataṁ santaṁ, ",
  "ja407:5.2": "sākhāya ca latāya ca; ",
  "ja407:5.3": "Samanukkamantā pādehi, ",
  "ja407:5.4": "sotthiṁ sākhāmigā gatā. ",
  "ja407:6.1": "Taṁ maṁ na tapate bandho, ",
  "ja407:6.2": "mato me na tapessati; ",
  "ja407:6.3": "Sukhamāharitaṁ tesaṁ, ",
  "ja407:6.4": "yesaṁ rajjamakārayiṁ. ",
  "ja407:7.1": "Esā te upamā rāja, ",
  "ja407:7.2": "taṁ suṇohi arindama; ",
  "ja407:7.3": "Raññā raṭṭhassa yoggassa, ",
  "ja407:7.4": "balassa nigamassa ca; ",
  "ja407:7.5": "Sabbesaṁ sukhameṭṭhabbaṁ, ",
  "ja407:7.6": "khattiyena pajānatā”ti. ",
  "ja407:8.1": "Mahākapijātakaṁ dutiyaṁ. "
}