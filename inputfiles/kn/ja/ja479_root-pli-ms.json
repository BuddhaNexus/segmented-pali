{
"ja479:1.1": "Jātaka",
"ja479:2.1": "Terasakanipāta",
"ja479:3.1": "Ambavagga",
"ja479:4.1": "6. Kāliṅgabodhijātaka",
"ja479:5.1": "Rājā kāliṅgo cakkavatti,",
"ja479:5.2": "Dhammena pathavimanusāsaṃ;",
"ja479:5.3": "Agamā bodhisamīpaṃ,",
"ja479:5.4": "Nāgena mahānubhāvena.",
"ja479:6.1": "Kāliṅgo bhāradvājo ca,",
"ja479:6.2": "Rājānaṃ kāliṅgaṃ samaṇakolaññaṃ;",
"ja479:6.3": "Cakkaṃ vattayato pariggahetvā,",
"ja479:6.4": "Pañjalī idamavoca.",
"ja479:7.1": "“Paccoroha mahārāja,",
"ja479:7.2": "Bhūmibhāgo yathā samaṇuggato;",
"ja479:7.3": "Idha anadhivarā buddhā,",
"ja479:7.4": "Abhisambuddhā virocanti.",
"ja479:8.1": "Padakkhiṇato āvaṭṭā,",
"ja479:8.2": "Tiṇalatā asmiṃ bhūmibhāgasmiṃ;",
"ja479:8.3": "Pathaviyā nābhiyaṃ maṇḍo,",
"ja479:8.4": "Iti no sutaṃ mante mahārāja.",
"ja479:9.1": "Sāgarapariyantāya,",
"ja479:9.2": "Mediniyā sabbabhūtadharaṇiyā;",
"ja479:9.3": "Pathaviyā ayaṃ maṇḍo,",
"ja479:9.4": "Orohitvā namo karohi.",
"ja479:10.1": "Ye te bhavanti nāgā ca,",
"ja479:10.2": "abhijātā ca kuñjarā;",
"ja479:10.3": "Ettāvatā padesaṃ te,",
"ja479:10.4": "nāgā neva mupayanti.",
"ja479:11.1": "Abhijāto nāgo kāmaṃ,",
"ja479:11.2": "Pesehi kuñjaraṃ dantiṃ;",
"ja479:11.3": "Ettāvatā padeso,",
"ja479:11.4": "Sakkā nāgena mupagantuṃ.",
"ja479:12.1": "Taṃ sutvā rājā kāliṅgo,",
"ja479:12.2": "Veyyañjanikavaco nisāmetvā;",
"ja479:12.3": "Sampesesi nāgaṃ ñassāma,",
"ja479:12.4": "Mayaṃ yathimassidaṃ vacanaṃ”.",
"ja479:13.1": "Sampesito ca raññā,",
"ja479:13.2": "Nāgo koñcova abhinaditvāna;",
"ja479:13.3": "Paṭisakkitvā nisīdi,",
"ja479:13.4": "Garuṃva bhāraṃ asahamāno.",
"ja479:14.1": "Kāliṅgabhāradvājo,",
"ja479:14.2": "Nāgaṃ khīṇāyukaṃ viditvāna;",
"ja479:14.3": "Rājānaṃ kāliṅgaṃ,",
"ja479:14.4": "Taramāno ajjhabhāsittha;",
"ja479:14.5": "“Aññaṃ saṅkama nāgaṃ,",
"ja479:14.6": "Nāgo khīṇāyuko mahārāja”.",
"ja479:15.1": "Taṃ sutvā kāliṅgo,",
"ja479:15.2": "taramāno saṅkamī nāgaṃ;",
"ja479:15.3": "Saṅkanteva raññe,",
"ja479:15.4": "nāgo tattheva pati bhumyā;",
"ja479:15.5": "Veyyañjanikavaco,",
"ja479:15.6": "yathā tathā ahu nāgo.",
"ja479:16.1": "Kāliṅgo rājā kāliṅgaṃ,",
"ja479:16.2": "brāhmaṇaṃ etadavoca;",
"ja479:16.3": "“Tvameva asi sambuddho,",
"ja479:16.4": "sabbaññū sabbadassāvī”.",
"ja479:17.1": "Taṃ anadhivāsento kāliṅgaṃ,",
"ja479:17.2": "Brāhmaṇo idamavoca;",
"ja479:17.3": "“Veyyañjanikā hi mayaṃ,",
"ja479:17.4": "Buddhā sabbaññuno mahārāja.",
"ja479:18.1": "Sabbaññū sabbavidū ca,",
"ja479:18.2": "Buddhā na lakkhaṇena jānanti;",
"ja479:18.3": "Āgamabalasā hi mayaṃ,",
"ja479:18.4": "Buddhā sabbaṃ pajānanti”.",
"ja479:19.1": "Mahayitvā sambodhiṃ,",
"ja479:19.2": "Nānāturiyehi vajjamānehi;",
"ja479:19.3": "Mālāvilepanaṃ abhiharitvā,",
"ja479:19.4": "Atha rājā manupāyāsi.",
"ja479:20.1": "Saṭṭhi vāhasahassāni,",
"ja479:20.2": "pupphānaṃ sannipātayi;",
"ja479:20.3": "Pūjesi rājā kāliṅgo,",
"ja479:20.4": "bodhimaṇḍamanuttaranti.",
"ja479:21.1": "Kāliṅgabodhijātakaṃ chaṭṭhaṃ."
}