{
"ja528:1.1": "Jātaka",
"ja528:2.1": "Paṇṇāsanipāta",
"ja528:3.1": "Niḷinikāvagga",
"ja528:4.1": "3. Mahābodhijātaka",
"ja528:5.1": "“Kiṃ nu daṇḍaṃ kimajinaṃ,",
"ja528:5.2": "kiṃ chattaṃ kimupāhanaṃ;",
"ja528:5.3": "Kimaṅkusañca pattañca,",
"ja528:5.4": "saṅghāṭiñcāpi brāhmaṇa;",
"ja528:5.5": "Taramānarūpohāsi,",
"ja528:5.6": "kiṃ nu patthayase disaṃ”.",
"ja528:6.1": "“Dvādasetāni vassāni,",
"ja528:6.2": "vusitāni tavantike;",
"ja528:6.3": "Nābhijānāmi soṇena,",
"ja528:6.4": "piṅgalenābhikūjitaṃ.",
"ja528:7.1": "Svāyaṃ dittova nadati,",
"ja528:7.2": "sukkadāṭhaṃ vidaṃsayaṃ;",
"ja528:7.3": "Tava sutvā sabhariyassa,",
"ja528:7.4": "vītasaddhassa maṃ pati”.",
"ja528:8.1": "“Ahu esa kato doso,",
"ja528:8.2": "yathā bhāsasi brāhmaṇa;",
"ja528:8.3": "Esa bhiyyo pasīdāmi,",
"ja528:8.4": "vasa brāhmaṇa māgamā”.",
"ja528:9.1": "“Sabbaseto pure āsi,",
"ja528:9.2": "tatopi sabalo ahu;",
"ja528:9.3": "Sabbalohitako dāni,",
"ja528:9.4": "kālo pakkamituṃ mama.",
"ja528:10.1": "Abbhantaraṃ pure āsi,",
"ja528:10.2": "tato majjhe tato bahi;",
"ja528:10.3": "Purā niddhamanā hoti,",
"ja528:10.4": "sayameva vajāmahaṃ.",
"ja528:11.1": "Vītasaddhaṃ na seveyya,",
"ja528:11.2": "udapānaṃvanodakaṃ;",
"ja528:11.3": "Sacepi naṃ anukhaṇe,",
"ja528:11.4": "vāri kaddamagandhikaṃ.",
"ja528:12.1": "Pasannameva seveyya,",
"ja528:12.2": "appasannaṃ vivajjaye;",
"ja528:12.3": "Pasannaṃ payirupāseyya,",
"ja528:12.4": "rahadaṃ vudakatthiko.",
"ja528:13.1": "Bhaje bhajantaṃ purisaṃ,",
"ja528:13.2": "abhajantaṃ na bhajjaye;",
"ja528:13.3": "Asappurisadhammo so,",
"ja528:13.4": "yo bhajantaṃ na bhajjati.",
"ja528:14.1": "Yo bhajantaṃ na bhajati,",
"ja528:14.2": "sevamānaṃ na sevati;",
"ja528:14.3": "Sa ve manussapāpiṭṭho,",
"ja528:14.4": "migo sākhassito yathā.",
"ja528:15.1": "Accābhikkhaṇasaṃsaggā,",
"ja528:15.2": "asamosaraṇena ca;",
"ja528:15.3": "Etena mittā jīranti,",
"ja528:15.4": "akāle yācanāya ca.",
"ja528:16.1": "Tasmā nābhikkhaṇaṃ gacche,",
"ja528:16.2": "na ca gacche cirāciraṃ;",
"ja528:16.3": "Kālena yācaṃ yāceyya,",
"ja528:16.4": "evaṃ mittā na jīyare.",
"ja528:17.1": "Aticiraṃ nivāsena,",
"ja528:17.2": "piyo bhavati appiyo;",
"ja528:17.3": "Āmanta kho taṃ gacchāma,",
"ja528:17.4": "purā te homa appiyā”.",
"ja528:18.1": "“Evañce yācamānānaṃ,",
"ja528:18.2": "Añjaliṃ nāvabujjhasi;",
"ja528:18.3": "Paricārakānaṃ sataṃ,",
"ja528:18.4": "Vacanaṃ na karosi no;",
"ja528:18.5": "Evaṃ taṃ abhiyācāma,",
"ja528:18.6": "Puna kayirāsi pariyāyaṃ”.",
"ja528:19.1": "“Evañce no viharataṃ,",
"ja528:19.2": "Antarāyo na hessati;",
"ja528:19.3": "Tuyhaṃ vāpi mahārāja,",
"ja528:19.4": "Mayhaṃ vā raṭṭhavaddhana;",
"ja528:19.5": "Appeva nāma passema,",
"ja528:19.6": "Ahorattānamaccaye.",
"ja528:20.1": "Udīraṇā ce saṅgatyā,",
"ja528:20.2": "bhāvāya manuvattati;",
"ja528:20.3": "Akāmā akaraṇīyaṃ vā,",
"ja528:20.4": "karaṇīyaṃ vāpi kubbati;",
"ja528:20.5": "Akāmākaraṇīyamhi,",
"ja528:20.6": "kvidha pāpena lippati.",
"ja528:21.1": "So ce attho ca dhammo ca,",
"ja528:21.2": "kalyāṇo na ca pāpako;",
"ja528:21.3": "Bhoto ce vacanaṃ saccaṃ,",
"ja528:21.4": "suhato vānaro mayā.",
"ja528:22.1": "Attano ce hi vādassa,",
"ja528:22.2": "aparādhaṃ vijāniyā;",
"ja528:22.3": "Na maṃ tvaṃ garaheyyāsi,",
"ja528:22.4": "bhoto vādo hi tādiso.",
"ja528:23.1": "Issaro sabbalokassa,",
"ja528:23.2": "sace kappeti jīvitaṃ;",
"ja528:23.3": "Iddhiṃ byasanabhāvañca,",
"ja528:23.4": "kammaṃ kalyāṇapāpakaṃ;",
"ja528:23.5": "Niddesakārī puriso,",
"ja528:23.6": "issaro tena lippati.",
"ja528:24.1": "So ce attho ca dhammo ca,",
"ja528:24.2": "kalyāṇo na ca pāpako;",
"ja528:24.3": "Bhoto ce vacanaṃ saccaṃ,",
"ja528:24.4": "suhato vānaro mayā.",
"ja528:25.1": "Attano ce hi vādassa,",
"ja528:25.2": "aparādhaṃ vijāniyā;",
"ja528:25.3": "Na maṃ tvaṃ garaheyyāsi,",
"ja528:25.4": "bhoto vādo hi tādiso.",
"ja528:26.1": "Sace pubbekatahetu,",
"ja528:26.2": "sukhadukkhaṃ nigacchati;",
"ja528:26.3": "Porāṇakaṃ kataṃ pāpaṃ,",
"ja528:26.4": "tameso muccate iṇaṃ;",
"ja528:26.5": "Porāṇakaiṇamokkho,",
"ja528:26.6": "kvidha pāpena lippati.",
"ja528:27.1": "So ce attho ca dhammo ca,",
"ja528:27.2": "kalyāṇo na ca pāpako;",
"ja528:27.3": "Bhoto ce vacanaṃ saccaṃ,",
"ja528:27.4": "suhato vānaro mayā.",
"ja528:28.1": "Attano ce hi vādassa,",
"ja528:28.2": "aparādhaṃ vijāniyā;",
"ja528:28.3": "Na maṃ tvaṃ garaheyyāsi,",
"ja528:28.4": "bhoto vādo hi tādiso.",
"ja528:29.1": "Catunnaṃyevupādāya,",
"ja528:29.2": "rūpaṃ sambhoti pāṇinaṃ;",
"ja528:29.3": "Yato ca rūpaṃ sambhoti,",
"ja528:29.4": "tatthevānupagacchati;",
"ja528:29.5": "Idheva jīvati jīvo,",
"ja528:29.6": "pecca pecca vinassati.",
"ja528:30.1": "Ucchijjati ayaṃ loko,",
"ja528:30.2": "ye bālā ye ca paṇḍitā;",
"ja528:30.3": "Ucchijjamāne lokasmiṃ,",
"ja528:30.4": "kvidha pāpena lippati.",
"ja528:31.1": "So ce attho ca dhammo ca,",
"ja528:31.2": "kalyāṇo na ca pāpako;",
"ja528:31.3": "Bhoto ce vacanaṃ saccaṃ,",
"ja528:31.4": "suhato vānaro mayā.",
"ja528:32.1": "Attano ce hi vādassa,",
"ja528:32.2": "aparādhaṃ vijāniyā;",
"ja528:32.3": "Na maṃ tvaṃ garaheyyāsi,",
"ja528:32.4": "bhoto vādo hi tādiso.",
"ja528:33.1": "Āhu khattavidā loke,",
"ja528:33.2": "bālā paṇḍitamānino;",
"ja528:33.3": "‘Mātaraṃ pitaraṃ haññe,",
"ja528:33.4": "atho jeṭṭhampi bhātaraṃ;",
"ja528:33.5": "Haneyya puttadāre ca,",
"ja528:33.6": "attho ce tādiso siyā’.",
"ja528:34.1": "Yassa rukkhassa chāyāya,",
"ja528:34.2": "nisīdeyya sayeyya vā;",
"ja528:34.3": "Na tassa sākhaṃ bhañjeyya,",
"ja528:34.4": "mittadubbho hi pāpako.",
"ja528:35.1": "Atha atthe samuppanne,",
"ja528:35.2": "samūlamapi abbahe;",
"ja528:35.3": "Attho me sambalenāpi,",
"ja528:35.4": "suhato vānaro mayā.",
"ja528:36.1": "So ce attho ca dhammo ca,",
"ja528:36.2": "kalyāṇo na ca pāpako;",
"ja528:36.3": "Bhoto ce vacanaṃ saccaṃ,",
"ja528:36.4": "suhato vānaro mayā.",
"ja528:37.1": "Attano ce hi vādassa,",
"ja528:37.2": "aparādhaṃ vijāniyā;",
"ja528:37.3": "Na maṃ tvaṃ garaheyyāsi,",
"ja528:37.4": "bhoto vādo hi tādiso.",
"ja528:38.1": "Ahetuvādo puriso,",
"ja528:38.2": "yo ca issarakuttiko;",
"ja528:38.3": "Pubbekatī ca ucchedī,",
"ja528:38.4": "yo ca khattavido naro.",
"ja528:39.1": "Ete asappurisā loke,",
"ja528:39.2": "bālā paṇḍitamānino;",
"ja528:39.3": "Kareyya tādiso pāpaṃ,",
"ja528:39.4": "atho aññampi kāraye;",
"ja528:39.5": "Asappurisasaṃsaggo,",
"ja528:39.6": "dukkhanto kaṭukudrayo.",
"ja528:40.1": "Urabbharūpena vakassu pubbe,",
"ja528:40.2": "Asaṃkito ajayūthaṃ upeti;",
"ja528:40.3": "Hantvā uraṇiṃ ajikaṃ ajañca,",
"ja528:40.4": "Utrāsayitvā yena kāmaṃ paleti.",
"ja528:41.1": "Tathāvidheke samaṇabrāhmaṇāse,",
"ja528:41.2": "Chadanaṃ katvā vañcayanti manusse;",
"ja528:41.3": "Anāsakā thaṇḍilaseyyakā ca,",
"ja528:41.4": "Rajojallaṃ ukkuṭikappadhānaṃ;",
"ja528:41.5": "Pariyāyabhattañca apānakattā,",
"ja528:41.6": "Pāpācārā arahanto vadānā.",
"ja528:42.1": "Ete asappurisā loke,",
"ja528:42.2": "bālā paṇḍitamānino;",
"ja528:42.3": "Kareyya tādiso pāpaṃ,",
"ja528:42.4": "atho aññampi kāraye;",
"ja528:42.5": "Asappurisasaṃsaggo,",
"ja528:42.6": "dukkhanto kaṭukudrayo.",
"ja528:43.1": "Yamāhu natthi vīriyanti,",
"ja528:43.2": "ahetuñca pavadanti ye;",
"ja528:43.3": "Parakāraṃ attakārañca,",
"ja528:43.4": "ye tucchaṃ samavaṇṇayuṃ.",
"ja528:44.1": "Ete asappurisā loke,",
"ja528:44.2": "bālā paṇḍitamānino;",
"ja528:44.3": "Kareyya tādiso pāpaṃ,",
"ja528:44.4": "atho aññampi kāraye;",
"ja528:44.5": "Asappurisasaṃsaggo,",
"ja528:44.6": "dukkhanto kaṭukudrayo.",
"ja528:45.1": "Sace hi vīriyaṃ nāssa,",
"ja528:45.2": "kammaṃ kalyāṇapāpakaṃ;",
"ja528:45.3": "Na bhare vaḍḍhakiṃ rājā,",
"ja528:45.4": "napi yantāni kāraye.",
"ja528:46.1": "Yasmā ca vīriyaṃ atthi,",
"ja528:46.2": "kammaṃ kalyāṇapāpakaṃ;",
"ja528:46.3": "Tasmā yantāni kāreti,",
"ja528:46.4": "rājā bharati vaḍḍhakiṃ.",
"ja528:47.1": "Yadi vassasataṃ devo,",
"ja528:47.2": "na vasse na himaṃ pate;",
"ja528:47.3": "Ucchijjeyya ayaṃ loko,",
"ja528:47.4": "vinasseyya ayaṃ pajā.",
"ja528:48.1": "Yasmā ca vassatī devo,",
"ja528:48.2": "himañcānuphusāyati;",
"ja528:48.3": "Tasmā sassāni paccanti,",
"ja528:48.4": "raṭṭhañca pālite ciraṃ.",
"ja528:49.1": "Gavañce taramānānaṃ,",
"ja528:49.2": "jimhaṃ gacchati puṅgavo;",
"ja528:49.3": "Sabbā tā jimhaṃ gacchanti,",
"ja528:49.4": "nette jimhaṃ gate sati.",
"ja528:50.1": "Evameva manussesu,",
"ja528:50.2": "yo hoti seṭṭhasammato;",
"ja528:50.3": "So ce adhammaṃ carati,",
"ja528:50.4": "pageva itarā pajā;",
"ja528:50.5": "Sabbaṃ raṭṭhaṃ dukhaṃ seti,",
"ja528:50.6": "rājā ce hoti adhammiko.",
"ja528:51.1": "Gavañce taramānānaṃ,",
"ja528:51.2": "ujuṃ gacchati puṅgavo;",
"ja528:51.3": "Sabbā gāvī ujuṃ yanti,",
"ja528:51.4": "nette ujuṃ gate sati.",
"ja528:52.1": "Evameva manussesu,",
"ja528:52.2": "yo hoti seṭṭhasammato;",
"ja528:52.3": "So sace dhammaṃ carati,",
"ja528:52.4": "pageva itarā pajā;",
"ja528:52.5": "Sabbaṃ raṭṭhaṃ sukhaṃ seti,",
"ja528:52.6": "rājā ce hoti dhammiko.",
"ja528:53.1": "Mahārukkhassa phalino,",
"ja528:53.2": "āmaṃ chindati yo phalaṃ;",
"ja528:53.3": "Rasañcassa na jānāti,",
"ja528:53.4": "bījañcassa vinassati.",
"ja528:54.1": "Mahārukkhūpamaṃ raṭṭhaṃ,",
"ja528:54.2": "adhammena pasāsati;",
"ja528:54.3": "Rasañcassa na jānāti,",
"ja528:54.4": "raṭṭhañcassa vinassati.",
"ja528:55.1": "Mahārukkhassa phalino,",
"ja528:55.2": "pakkaṃ chindati yo phalaṃ;",
"ja528:55.3": "Rasañcassa vijānāti,",
"ja528:55.4": "bījañcassa na nassati.",
"ja528:56.1": "Mahārukkhūpamaṃ raṭṭhaṃ,",
"ja528:56.2": "dhammena yo pasāsati;",
"ja528:56.3": "Rasañcassa vijānāti,",
"ja528:56.4": "raṭṭhañcassa na nassati.",
"ja528:57.1": "Yo ca rājā janapadaṃ,",
"ja528:57.2": "adhammena pasāsati;",
"ja528:57.3": "Sabbosadhīhi so rājā,",
"ja528:57.4": "viruddho hoti khattiyo.",
"ja528:58.1": "Tatheva negame hiṃsaṃ,",
"ja528:58.2": "ye yuttā kayavikkaye;",
"ja528:58.3": "Ojadānabalīkāre,",
"ja528:58.4": "sa kosena virujjhati.",
"ja528:59.1": "Pahāravarakhettaññū,",
"ja528:59.2": "saṅgāme katanissame;",
"ja528:59.3": "Ussite hiṃsayaṃ rājā,",
"ja528:59.4": "sa balena virujjhati.",
"ja528:60.1": "Tatheva isayo hiṃsaṃ,",
"ja528:60.2": "saññate brahmacārino;",
"ja528:60.3": "Adhammacārī khattiyo,",
"ja528:60.4": "so saggena virujjhati.",
"ja528:61.1": "Yo ca rājā adhammaṭṭho,",
"ja528:61.2": "bhariyaṃ hanti adūsikaṃ;",
"ja528:61.3": "Luddaṃ pasavate ṭhānaṃ,",
"ja528:61.4": "puttehi ca virujjhati.",
"ja528:62.1": "Dhammaṃ care jānapade,",
"ja528:62.2": "negamesu balesu ca;",
"ja528:62.3": "Isayo ca na hiṃseyya,",
"ja528:62.4": "puttadāre samaṃ care.",
"ja528:63.1": "Sa tādiso bhūmipati,",
"ja528:63.2": "Raṭṭhapālo akodhano;",
"ja528:63.3": "Sapatte sampakampeti,",
"ja528:63.4": "Indova asurādhipo”ti. #3401",
"ja528:64.1": "Mahābodhijātakaṃ tatiyaṃ.",
"ja528:65.1": "Paṇṇāsanipātaṃ niṭṭhitaṃ.",
"ja528:66.1": "Tassuddānaṃ",
"ja528:67.1": "Saniḷīnikamavhayano paṭhamo,",
"ja528:67.2": "Dutiyo pana saummadantivaro;",
"ja528:67.3": "Tatiyo pana bodhisirīvhayano,",
"ja528:67.4": "Kathitā pana tīṇi jinena subhāti."
}