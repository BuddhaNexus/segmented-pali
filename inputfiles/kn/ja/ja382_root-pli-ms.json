{
"ja382:1.1": "Jātaka",
"ja382:2.1": "Chakkanipāta",
"ja382:3.1": "Avāriyavagga",
"ja382:4.1": "7. Sirikāḷakaṇṇijātaka",
"ja382:5.1": "“Kā nu kāḷena vaṇṇena,",
"ja382:5.2": "na cāpi piyadassanā;",
"ja382:5.3": "Kā vā tvaṃ kassa vā dhītā,",
"ja382:5.4": "kathaṃ jānemu taṃ mayaṃ”.",
"ja382:6.1": "“Mahārājassahaṃ dhītā,",
"ja382:6.2": "virūpakkhassa caṇḍiyā;",
"ja382:6.3": "Ahaṃ kāḷī alakkhikā,",
"ja382:6.4": "kāḷakaṇṇīti maṃ vidū;",
"ja382:6.5": "Okāsaṃ yācito dehi,",
"ja382:6.6": "vasemu tava santike”.",
"ja382:7.1": "“Kiṃsīle kiṃsamācāre,",
"ja382:7.2": "Purise nivisase tuvaṃ;",
"ja382:7.3": "Puṭṭhā me kāḷi akkhāhi,",
"ja382:7.4": "Kathaṃ jānemu taṃ mayaṃ”.",
"ja382:8.1": "“Makkhī paḷāsī sārambhī,",
"ja382:8.2": "issukī maccharī saṭho;",
"ja382:8.3": "So mayhaṃ puriso kanto,",
"ja382:8.4": "laddhaṃ yassa vinassati.",
"ja382:9.1": "Kodhano upanāhī ca,",
"ja382:9.2": "pisuṇo ca vibhedako;",
"ja382:9.3": "Kaṇḍakavāco pharuso,",
"ja382:9.4": "so me kantataro tato.",
"ja382:10.1": "Ajja suveti puriso,",
"ja382:10.2": "sadatthaṃ nāvabujjhati;",
"ja382:10.3": "Ovajjamāno kuppati,",
"ja382:10.4": "seyyaṃ so atimaññati.",
"ja382:11.1": "Davappaluddho puriso,",
"ja382:11.2": "sabbamittehi dhaṃsati;",
"ja382:11.3": "So mayhaṃ puriso kanto,",
"ja382:11.4": "tasmiṃ homi anāmayā”.",
"ja382:12.1": "“Apehi etto tvaṃ kāḷi,",
"ja382:12.2": "netaṃ amhesu vijjati;",
"ja382:12.3": "Aññaṃ janapadaṃ gaccha,",
"ja382:12.4": "nigame rājadhāniyo”.",
"ja382:13.1": "“Ahampi kho taṃ jānāmi,",
"ja382:13.2": "netaṃ tumhesu vijjati;",
"ja382:13.3": "Santi loke alakkhikā,",
"ja382:13.4": "saṃgharanti bahuṃ dhanaṃ;",
"ja382:13.5": "Ahaṃ devo ca me bhātā,",
"ja382:13.6": "ubho naṃ vidhamāmase”.",
"ja382:14.1": "“Kā nu dibbena vaṇṇena,",
"ja382:14.2": "pathabyā supatiṭṭhitā;",
"ja382:14.3": "Kā vā tvaṃ kassa vā dhītā,",
"ja382:14.4": "kathaṃ jānemu taṃ mayaṃ”.",
"ja382:15.1": "“Mahārājassahaṃ dhītā,",
"ja382:15.2": "dhataraṭṭhassa sirīmato;",
"ja382:15.3": "Ahaṃ sirī ca lakkhī ca,",
"ja382:15.4": "bhūripaññāti maṃ vidū;",
"ja382:15.5": "Okāsaṃ yācito dehi,",
"ja382:15.6": "vasemu tava santike”.",
"ja382:16.1": "“Kiṃsīle kiṃsamācāre,",
"ja382:16.2": "Purise nivisase tuvaṃ;",
"ja382:16.3": "Puṭṭhā me lakkhi akkhāhi,",
"ja382:16.4": "Kathaṃ jānemu taṃ mayaṃ”.",
"ja382:17.1": "“Yo cāpi sīte atha vāpi uṇhe,",
"ja382:17.2": "Vātātape ḍaṃsasarīsape ca;",
"ja382:17.3": "Khudhaṃ pipāsaṃ abhibhuyya sabbaṃ,",
"ja382:17.4": "Rattindivaṃ yo satataṃ niyutto.",
"ja382:18.1": "Kālāgatañca na hāpeti atthaṃ,",
"ja382:18.2": "So me manāpo nivise ca tamhi;",
"ja382:18.3": "Akkodhano mittavā cāgavā ca,",
"ja382:18.4": "Sīlūpapanno asaṭhojubhūto.",
"ja382:19.1": "Saṅgāhako sakhilo saṇhavāco,",
"ja382:19.2": "Mahattapattopi nivātavutti;",
"ja382:19.3": "Tasmiṃhaṃ pose vipulā bhavāmi,",
"ja382:19.4": "Ūmi samuddassa yathāpi vaṇṇaṃ.",
"ja382:20.1": "Yo cāpi mitte atha vā amitte,",
"ja382:20.2": "Seṭṭhe sarikkhe atha vāpi hīne;",
"ja382:20.3": "Atthaṃ carantaṃ atha vā anatthaṃ,",
"ja382:20.4": "Āvī raho saṅgahameva vatte.",
"ja382:21.1": "Vācaṃ na vajjā pharusaṃ kadāci,",
"ja382:21.2": "Matassa jīvassa ca tassa homi;",
"ja382:21.3": "Etesaṃ yo aññataraṃ labhitvā,",
"ja382:21.4": "Kantā sirī majjati appapañño;",
"ja382:21.5": "Taṃ dittarūpaṃ visamaṃ carantaṃ,",
"ja382:21.6": "Karīsaṭhānaṃva vivajjayāmi.",
"ja382:22.1": "Attanā kurute lakkhiṃ,",
"ja382:22.2": "alakkhiṃ kurutattanā;",
"ja382:22.3": "Na hi lakkhiṃ alakkhiṃ vā,",
"ja382:22.4": "añño aññassa kārako”ti.",
"ja382:23.1": "Sirikāḷakaṇṇijātakaṃ sattamaṃ."
}