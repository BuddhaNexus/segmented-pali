{
"ja533:1.1": "Jātaka",
"ja533:2.1": "Asītinipāta",
"ja533:3.1": "Cūḷahaṃsavagga",
"ja533:4.1": "1 Cūḷahaṃsajātaka",
"ja533:5.1": "“Sumukha anupacinantā,",
"ja533:5.2": "pakkamanti vihaṅgamā;",
"ja533:5.3": "Gaccha tuvampi mā kaṅkhi,",
"ja533:5.4": "natthi baddhe sahāyatā”.",
"ja533:6.1": "“Gacche vāhaṃ na vā gacche,",
"ja533:6.2": "na tena amaro siyaṃ;",
"ja533:6.3": "Sukhitaṃ taṃ upāsitvā,",
"ja533:6.4": "dukkhitaṃ taṃ kathaṃ jahe.",
"ja533:7.1": "Maraṇaṃ vā tayā saddhiṃ,",
"ja533:7.2": "jīvitaṃ vā tayā vinā;",
"ja533:7.3": "Tadeva maraṇaṃ seyyo,",
"ja533:7.4": "yañce jīve tayā vinā.",
"ja533:8.1": "Nesa dhammo mahārāja,",
"ja533:8.2": "yaṃ taṃ evaṃ gataṃ jahe;",
"ja533:8.3": "Yā gati tuyhaṃ sā mayhaṃ,",
"ja533:8.4": "ruccate vihagādhipa”.",
"ja533:9.1": "“Kā nu pāsena baddhassa,",
"ja533:9.2": "gati aññā mahānasā;",
"ja533:9.3": "Sā kathaṃ cetayānassa,",
"ja533:9.4": "muttassa tava ruccati.",
"ja533:10.1": "Kaṃ vā tvaṃ passase atthaṃ,",
"ja533:10.2": "mama tuyhañca pakkhima;",
"ja533:10.3": "Ñātīnaṃ vāvasiṭṭhānaṃ,",
"ja533:10.4": "ubhinnaṃ jīvitakkhaye.",
"ja533:11.1": "Yaṃ na kañcanadepiñcha,",
"ja533:11.2": "Andhena tamasā gataṃ;",
"ja533:11.3": "Tādise sañcajaṃ pāṇaṃ,",
"ja533:11.4": "Kamatthamabhijotaye”.",
"ja533:12.1": "“Kathaṃ nu patataṃ seṭṭha,",
"ja533:12.2": "Dhamme atthaṃ na bujjhasi;",
"ja533:12.3": "Dhammo apacito santo,",
"ja533:12.4": "Atthaṃ dasseti pāṇinaṃ.",
"ja533:13.1": "Sohaṃ dhammaṃ apekkhāno,",
"ja533:13.2": "dhammā catthaṃ samuṭṭhitaṃ;",
"ja533:13.3": "Bhattiñca tayi sampassaṃ,",
"ja533:13.4": "nāvakaṅkhāmi jīvitaṃ.",
"ja533:14.1": "Addhā eso sataṃ dhammo,",
"ja533:14.2": "yo mitto mittamāpade;",
"ja533:14.3": "Na caje jīvitassāpi,",
"ja533:14.4": "hetudhammamanussaraṃ”.",
"ja533:15.1": "“Svāyaṃ dhammo ca te ciṇṇo,",
"ja533:15.2": "bhatti ca viditā mayi;",
"ja533:15.3": "Kāmaṃ karassu mayhetaṃ,",
"ja533:15.4": "gacchevānumato mayā.",
"ja533:16.1": "Api tvevaṃ gate kāle,",
"ja533:16.2": "yaṃ khaṇḍaṃ ñātinaṃ mayā;",
"ja533:16.3": "Tayā taṃ buddhisampannaṃ,",
"ja533:16.4": "assa paramasaṃvutaṃ”.",
"ja533:17.1": "Iccevaṃ mantayantānaṃ,",
"ja533:17.2": "Ariyānaṃ ariyavuttinaṃ;",
"ja533:17.3": "Paccadissatha nesādo,",
"ja533:17.4": "Āturānamivantako.",
"ja533:18.1": "Te sattumabhisañcikkha,",
"ja533:18.2": "dīgharattaṃ hitā dijā;",
"ja533:18.3": "Tuṇhīmāsittha ubhayo,",
"ja533:18.4": "na sañcalesumāsanā.",
"ja533:19.1": "Dhataraṭṭhe ca disvāna,",
"ja533:19.2": "samuḍḍente tato tato;",
"ja533:19.3": "Abhikkamatha vegena,",
"ja533:19.4": "dijasattu dijādhipe.",
"ja533:20.1": "So ca vegenabhikkamma,",
"ja533:20.2": "āsajja parame dije;",
"ja533:20.3": "Paccakamittha nesādo,",
"ja533:20.4": "baddhā iti vicintayaṃ.",
"ja533:21.1": "Ekaṃva baddhamāsīnaṃ,",
"ja533:21.2": "abaddhañca punāparaṃ;",
"ja533:21.3": "Āsajja baddhamāsīnaṃ,",
"ja533:21.4": "pekkhamānamadīnavaṃ.",
"ja533:22.1": "Tato so vimatoyeva,",
"ja533:22.2": "paṇḍare ajjhabhāsatha;",
"ja533:22.3": "Pavaḍḍhakāye āsīne,",
"ja533:22.4": "dijasaṅghagaṇādhipe.",
"ja533:23.1": "“Yannu pāsena mahatā,",
"ja533:23.2": "baddho na kurute disaṃ;",
"ja533:23.3": "Atha kasmā abaddho tvaṃ,",
"ja533:23.4": "balī pakkhi na gacchasi.",
"ja533:24.1": "Kiṃ nu tyāyaṃ dijo hoti,",
"ja533:24.2": "mutto baddhaṃ upāsasi;",
"ja533:24.3": "Ohāya sakuṇā yanti,",
"ja533:24.4": "kiṃ eko avahīyasi”.",
"ja533:25.1": "“Rājā me so dijāmitta,",
"ja533:25.2": "sakhā pāṇasamo ca me;",
"ja533:25.3": "Neva naṃ vijahissāmi,",
"ja533:25.4": "yāva kālassa pariyāyaṃ”.",
"ja533:26.1": "“Kathaṃ panāyaṃ vihaṅgo,",
"ja533:26.2": "nāddasa pāsamoḍḍitaṃ;",
"ja533:26.3": "Padañhetaṃ mahantānaṃ,",
"ja533:26.4": "boddhumarahanti āpadaṃ”.",
"ja533:27.1": "“Yadā parābhavo hoti,",
"ja533:27.2": "poso jīvitasaṅkhaye;",
"ja533:27.3": "Atha jālañca pāsañca,",
"ja533:27.4": "āsajjāpi na bujjhati.",
"ja533:28.1": "Api tveva mahāpañña,",
"ja533:28.2": "pāsā bahuvidhā tatā;",
"ja533:28.3": "Guyhamāsajja bajjhanti,",
"ja533:28.4": "athevaṃ jīvitakkhaye”.",
"ja533:29.1": "“Api nāyaṃ tayā saddhiṃ,",
"ja533:29.2": "saṃvāsassa sukhudrayo;",
"ja533:29.3": "Api no anumaññāsi,",
"ja533:29.4": "api no jīvitaṃ dade”.",
"ja533:30.1": "“Na ceva me tvaṃ baddhosi,",
"ja533:30.2": "napi icchāmi te vadhaṃ;",
"ja533:30.3": "Kāmaṃ khippamito gantvā,",
"ja533:30.4": "jīva tvaṃ anigho ciraṃ”.",
"ja533:31.1": "“Nevāhametamicchāmi,",
"ja533:31.2": "aññatretassa jīvitā;",
"ja533:31.3": "Sace ekena tuṭṭhosi,",
"ja533:31.4": "muñcetaṃ mañca bhakkhaya.",
"ja533:32.1": "Ārohapariṇāhena,",
"ja533:32.2": "tulyāsmā vayasā ubho;",
"ja533:32.3": "Na te lābhena jīvatthi,",
"ja533:32.4": "etena niminā tuvaṃ.",
"ja533:33.1": "Tadiṅgha samapekkhassu,",
"ja533:33.2": "hotu giddhi tavamhasu;",
"ja533:33.3": "Maṃ pubbe bandha pāsena,",
"ja533:33.4": "pacchā muñca dijādhipaṃ.",
"ja533:34.1": "Tāvadeva ca te lābho,",
"ja533:34.2": "katāssa yācanāya ca;",
"ja533:34.3": "Mitti ca dhataraṭṭhehi,",
"ja533:34.4": "yāvajīvāya te siyā”.",
"ja533:35.1": "“Passantu no mahāsaṃghā,",
"ja533:35.2": "tayā muttaṃ ito gataṃ;",
"ja533:35.3": "Mittāmaccā ca bhaccā ca,",
"ja533:35.4": "puttadārā ca bandhavā.",
"ja533:36.1": "Na ca te tādisā mittā,",
"ja533:36.2": "bahūnaṃ idha vijjati;",
"ja533:36.3": "Yathā tvaṃ dhataraṭṭhassa,",
"ja533:36.4": "pāṇasādhāraṇo sakhā.",
"ja533:37.1": "So te sahāyaṃ muñcāmi,",
"ja533:37.2": "hotu rājā tavānugo;",
"ja533:37.3": "Kāmaṃ khippamito gantvā,",
"ja533:37.4": "ñātimajjhe virocatha”.",
"ja533:38.1": "“So patīto pamuttena,",
"ja533:38.2": "bhattunā bhattugāravo;",
"ja533:38.3": "Ajjhabhāsatha vakkaṅgo,",
"ja533:38.4": "vācaṃ kaṇṇasukhaṃ bhaṇaṃ.",
"ja533:39.1": "Evaṃ luddaka nandassu,",
"ja533:39.2": "saha sabbehi ñātibhi;",
"ja533:39.3": "Yathāhamajja nandāmi,",
"ja533:39.4": "muttaṃ disvā dijādhipaṃ”.",
"ja533:40.1": "“Ehi taṃ anusikkhāmi,",
"ja533:40.2": "Yathā tvamapi lacchase;",
"ja533:40.3": "Lābhaṃ tavāyaṃ dhataraṭṭho,",
"ja533:40.4": "Pāpaṃ kiñci na dakkhati.",
"ja533:41.1": "Khippamantepuraṃ netvā,",
"ja533:41.2": "rañño dassehi no ubho;",
"ja533:41.3": "Abaddhe pakatibhūte,",
"ja533:41.4": "kāje ubhayato ṭhite.",
"ja533:42.1": "Dhataraṭṭhā mahārāja,",
"ja533:42.2": "haṃsādhipatino ime;",
"ja533:42.3": "Ayañhi rājā haṃsānaṃ,",
"ja533:42.4": "ayaṃ senāpatītaro.",
"ja533:43.1": "Asaṃsayaṃ imaṃ disvā,",
"ja533:43.2": "haṃsarājaṃ narādhipo;",
"ja533:43.3": "Patīto sumano vitto,",
"ja533:43.4": "bahuṃ dassati te dhanaṃ”.",
"ja533:44.1": "Tassa taṃ vacanaṃ sutvā,",
"ja533:44.2": "kammunā upapādayi;",
"ja533:44.3": "Khippamantepuraṃ gantvā,",
"ja533:44.4": "rañño haṃse adassayi;",
"ja533:44.5": "Abaddhe pakatibhūte,",
"ja533:44.6": "kāje ubhayato ṭhite.",
"ja533:45.1": "“Dhataraṭṭhā mahārāja,",
"ja533:45.2": "haṃsādhipatino ime;",
"ja533:45.3": "Ayañhi rājā haṃsānaṃ,",
"ja533:45.4": "ayaṃ senāpatītaro”.",
"ja533:46.1": "“Kathaṃ panime vihaṅgā,",
"ja533:46.2": "tava hatthattamāgatā;",
"ja533:46.3": "Kathaṃ luddo mahantānaṃ,",
"ja533:46.4": "issare idha ajjhagā”.",
"ja533:47.1": "“Vihitā santime pāsā,",
"ja533:47.2": "pallalesu janādhipa;",
"ja533:47.3": "Yaṃ yadāyatanaṃ maññe,",
"ja533:47.4": "dijānaṃ pāṇarodhanaṃ.",
"ja533:48.1": "Tādisaṃ pāsamāsajja,",
"ja533:48.2": "haṃsarājā abajjhatha;",
"ja533:48.3": "Taṃ abaddho upāsīno,",
"ja533:48.4": "mamāyaṃ ajjhabhāsatha.",
"ja533:49.1": "Sudukkaraṃ anariyehi,",
"ja533:49.2": "dahate bhāvamuttamaṃ;",
"ja533:49.3": "Bhatturatthe parakkanto,",
"ja533:49.4": "dhammayutto vihaṅgamo.",
"ja533:50.1": "Attanāyaṃ cajitvāna,",
"ja533:50.2": "jīvitaṃ jīvitāraho;",
"ja533:50.3": "Anutthunanto āsīno,",
"ja533:50.4": "bhattu yācittha jīvitaṃ.",
"ja533:51.1": "Tassa taṃ vacanaṃ sutvā,",
"ja533:51.2": "pasādamahamajjhagā;",
"ja533:51.3": "Tato naṃ pāmuciṃ pāsā,",
"ja533:51.4": "anuññāsiṃ sukhena ca.",
"ja533:52.1": "So patīto pamuttena,",
"ja533:52.2": "bhattunā bhattugāravo;",
"ja533:52.3": "Ajjhabhāsatha vakkaṅgo,",
"ja533:52.4": "vācaṃ kaṇṇasukhaṃ bhaṇaṃ.",
"ja533:53.1": "‘Evaṃ luddaka nandassu,",
"ja533:53.2": "saha sabbehi ñātibhi;",
"ja533:53.3": "Yathāhamajja nandāmi,",
"ja533:53.4": "muttaṃ disvā dijādhipaṃ.",
"ja533:54.1": "Ehi taṃ anusikkhāmi,",
"ja533:54.2": "yathā tvamapi lacchase;",
"ja533:54.3": "Lābhaṃ tavāyaṃ dhataraṭṭho,",
"ja533:54.4": "pāpaṃ kiñci na dakkhati.",
"ja533:55.1": "Khippamantepuraṃ netvā,",
"ja533:55.2": "rañño dassehi no ubho;",
"ja533:55.3": "Abaddhe pakatibhūte,",
"ja533:55.4": "kāje ubhayato ṭhite.",
"ja533:56.1": "“Dhataraṭṭhā mahārāja,",
"ja533:56.2": "haṃsādhipatino ime;",
"ja533:56.3": "Ayañhi rājā haṃsānaṃ,",
"ja533:56.4": "ayaṃ senāpatītaro”.",
"ja533:57.1": "Asaṃsayaṃ imaṃ disvā,",
"ja533:57.2": "haṃsarājaṃ narādhipo;",
"ja533:57.3": "Patīto sumano vitto,",
"ja533:57.4": "bahuṃ dassati te dhanaṃ’.",
"ja533:58.1": "Evametassa vacanā,",
"ja533:58.2": "ānītāme ubho mayā;",
"ja533:58.3": "Ettheva hi ime āsuṃ,",
"ja533:58.4": "ubho anumatā mayā.",
"ja533:59.1": "Soyaṃ evaṃ gato pakkhī,",
"ja533:59.2": "dijo paramadhammiko;",
"ja533:59.3": "Mādisassa hi luddassa,",
"ja533:59.4": "janayeyyātha maddavaṃ.",
"ja533:60.1": "Upāyanañca te deva,",
"ja533:60.2": "nāññaṃ passāmi edisaṃ;",
"ja533:60.3": "Sabbasākuṇikāgāme,",
"ja533:60.4": "taṃ passa manujādhipa”.",
"ja533:61.1": "Disvā nisinnaṃ rājānaṃ,",
"ja533:61.2": "pīṭhe sovaṇṇaye subhe;",
"ja533:61.3": "Ajjhabhāsatha vakkaṅgo,",
"ja533:61.4": "vācaṃ kaṇṇasukhaṃ bhaṇaṃ.",
"ja533:62.1": "“Kaccinnu bhoto kusalaṃ,",
"ja533:62.2": "kacci bhoto anāmayaṃ;",
"ja533:62.3": "Kacci raṭṭhamidaṃ phītaṃ,",
"ja533:62.4": "dhammena manusāsasi”.",
"ja533:63.1": "“Kusalañceva me haṃsa,",
"ja533:63.2": "Atho haṃsa anāmayaṃ;",
"ja533:63.3": "Atho raṭṭhamidaṃ phītaṃ,",
"ja533:63.4": "Dhammena manusāsahaṃ”.",
"ja533:64.1": "“Kacci bhoto amaccesu,",
"ja533:64.2": "doso koci na vijjati;",
"ja533:64.3": "Kacci ca te tavatthesu,",
"ja533:64.4": "nāvakaṅkhanti jīvitaṃ”.",
"ja533:65.1": "“Athopi me amaccesu,",
"ja533:65.2": "doso koci na vijjati;",
"ja533:65.3": "Athopi te mamatthesu,",
"ja533:65.4": "nāvakaṅkhanti jīvitaṃ”.",
"ja533:66.1": "“Kacci te sādisī bhariyā,",
"ja533:66.2": "assavā piyabhāṇinī;",
"ja533:66.3": "Puttarūpayasūpetā,",
"ja533:66.4": "tava chandavasānugā”.",
"ja533:67.1": "“Atho me sādisī bhariyā,",
"ja533:67.2": "assavā piyabhāṇinī;",
"ja533:67.3": "Puttarūpayasūpetā,",
"ja533:67.4": "mama chandavasānugā.",
"ja533:68.1": "Bhavantaṃ kacci nu mahā-",
"ja533:68.2": "sattuhatthattataṃ gato;",
"ja533:68.3": "Dukkhamāpajji vipulaṃ,",
"ja533:68.4": "tasmiṃ paṭhamamāpade.",
"ja533:69.1": "Kacci yantāpatitvāna,",
"ja533:69.2": "daṇḍena samapothayi;",
"ja533:69.3": "Evametesaṃ jammānaṃ,",
"ja533:69.4": "pātikaṃ bhavati tāvade”.",
"ja533:70.1": "“Khemamāsi mahārāja,",
"ja533:70.2": "evamāpadiyā sati;",
"ja533:70.3": "Na cāyaṃ kiñci rasmāsu,",
"ja533:70.4": "sattūva samapajjatha.",
"ja533:71.1": "Paccagamittha nesādo,",
"ja533:71.2": "pubbeva ajjhabhāsatha;",
"ja533:71.3": "Tadāyaṃ sumukhoyeva,",
"ja533:71.4": "paṇḍito paccabhāsatha.",
"ja533:72.1": "Tassa taṃ vacanaṃ sutvā,",
"ja533:72.2": "pasādamayamajjhagā;",
"ja533:72.3": "Tato maṃ pāmucī pāsā,",
"ja533:72.4": "anuññāsi sukhena ca.",
"ja533:73.1": "Idañca sumukheneva,",
"ja533:73.2": "etadatthāya cintitaṃ;",
"ja533:73.3": "Bhoto sakāsegamanaṃ,",
"ja533:73.4": "etassa dhanamicchatā”.",
"ja533:74.1": "“Svāgatañcevidaṃ bhavataṃ,",
"ja533:74.2": "patīto casmi dassanā;",
"ja533:74.3": "Eso cāpi bahuṃ vittaṃ,",
"ja533:74.4": "labhataṃ yāvadicchati”.",
"ja533:75.1": "Santappayitvā nesādaṃ,",
"ja533:75.2": "bhogehi manujādhipo;",
"ja533:75.3": "Ajjhabhāsatha vakkaṅgaṃ,",
"ja533:75.4": "vācaṃ kaṇṇasukhaṃ bhaṇaṃ.",
"ja533:76.1": "“Yaṃ khalu dhammamādhīnaṃ,",
"ja533:76.2": "vaso vattati kiñcanaṃ;",
"ja533:76.3": "Sabbatthissariyaṃ tava,",
"ja533:76.4": "taṃ pasāsa yadicchatha.",
"ja533:77.1": "Dānatthaṃ upabhottuṃ vā,",
"ja533:77.2": "yaṃ caññaṃ upakappati;",
"ja533:77.3": "Etaṃ dadāmi vo vittaṃ,",
"ja533:77.4": "issariyaṃ vissajāmi vo”.",
"ja533:78.1": "“Yathā ca myāyaṃ sumukho,",
"ja533:78.2": "ajjhabhāseyya paṇḍito;",
"ja533:78.3": "Kāmasā buddhisampanno,",
"ja533:78.4": "taṃ myāssa paramappiyaṃ”.",
"ja533:79.1": "“Ahaṃ khalu mahārāja,",
"ja533:79.2": "nāgarājārivantaraṃ;",
"ja533:79.3": "Paṭivattuṃ na sakkomi,",
"ja533:79.4": "na me so vinayo siyā.",
"ja533:80.1": "Amhākañceva so seṭṭho,",
"ja533:80.2": "tvañca uttamasattavo;",
"ja533:80.3": "Bhūmipālo manussindo,",
"ja533:80.4": "pūjā bahūhi hetuhi.",
"ja533:81.1": "Tesaṃ ubhinnaṃ bhaṇataṃ,",
"ja533:81.2": "vattamāne vinicchaye;",
"ja533:81.3": "Nantaraṃ paṭivattabbaṃ,",
"ja533:81.4": "pessena manujādhipa”.",
"ja533:82.1": "“Dhammena kira nesādo,",
"ja533:82.2": "paṇḍito aṇḍajo iti;",
"ja533:82.3": "Na heva akatattassa,",
"ja533:82.4": "nayo etādiso siyā.",
"ja533:83.1": "Evaṃ aggapakatimā,",
"ja533:83.2": "evaṃ uttamasattavo;",
"ja533:83.3": "Yāvatatthi mayā diṭṭhā,",
"ja533:83.4": "nāññaṃ passāmi edisaṃ.",
"ja533:84.1": "Tuṭṭhosmi vo pakatiyā,",
"ja533:84.2": "vākyena madhurena ca;",
"ja533:84.3": "Eso cāpi mamacchando,",
"ja533:84.4": "ciraṃ passeyya vo ubho”.",
"ja533:85.1": "“Yaṃ kiccaṃ parame mitte,",
"ja533:85.2": "katamasmāsu taṃ tayā;",
"ja533:85.3": "Pattā nissaṃsayaṃ tyāmhā,",
"ja533:85.4": "bhattirasmāsu yā tava.",
"ja533:86.1": "Aduñca nūna sumahā,",
"ja533:86.2": "ñātisaṅghassa mantaraṃ;",
"ja533:86.3": "Adassanena asmākaṃ,",
"ja533:86.4": "dukkhaṃ bahūsu pakkhisu.",
"ja533:87.1": "Tesaṃ sokavighātāya,",
"ja533:87.2": "Tayā anumatā mayaṃ;",
"ja533:87.3": "Taṃ padakkhiṇato katvā,",
"ja533:87.4": "Ñātiṃ passemurindama.",
"ja533:88.1": "Addhāhaṃ vipulaṃ pītiṃ,",
"ja533:88.2": "bhavataṃ vindāmi dassanā;",
"ja533:88.3": "Eso cāpi mahā attho,",
"ja533:88.4": "ñātivissāsanā siyā”.",
"ja533:89.1": "Idaṃ vatvā dhataraṭṭho,",
"ja533:89.2": "haṃsarājā narādhipaṃ;",
"ja533:89.3": "Uttamaṃ javamanvāya,",
"ja533:89.4": "ñātisaṅghaṃ upāgamuṃ.",
"ja533:90.1": "Te aroge anuppatte,",
"ja533:90.2": "disvāna parame dije;",
"ja533:90.3": "Kekāti makaruṃ haṃsā,",
"ja533:90.4": "puthusaddo ajāyatha.",
"ja533:91.1": "Te patītā pamuttena,",
"ja533:91.2": "bhattunā bhattugāravā;",
"ja533:91.3": "Samantā parikiriṃsu,",
"ja533:91.4": "aṇḍajā laddhapaccayā.",
"ja533:92.1": "Evaṃ mittavataṃ atthā,",
"ja533:92.2": "sabbe honti padakkhiṇā;",
"ja533:92.3": "Haṃsā yathā dhataraṭṭhā,",
"ja533:92.4": "ñātisaṅghaṃ upāgamunti.",
"ja533:93.1": "Cūḷahaṃsajātakaṃ paṭhamaṃ."
}