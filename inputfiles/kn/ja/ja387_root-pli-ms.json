{
"ja387:1.1": "Jātaka",
"ja387:2.1": "Chakkanipāta",
"ja387:3.1": "Kharaputtavagga",
"ja387:4.1": "2. Sūcijātaka",
"ja387:5.1": "“Akakkasaṃ apharusaṃ,",
"ja387:5.2": "kharadhotaṃ supāsiyaṃ;",
"ja387:5.3": "Sukhumaṃ tikhiṇaggañca,",
"ja387:5.4": "ko sūciṃ ketumicchati.",
"ja387:6.1": "Sumajjañca supāsañca,",
"ja387:6.2": "anupubbaṃ suvaṭṭitaṃ;",
"ja387:6.3": "Ghanaghātimaṃ paṭithaddhaṃ,",
"ja387:6.4": "ko sūciṃ ketumicchati”.",
"ja387:7.1": "“Ito dāni patāyanti,",
"ja387:7.2": "sūciyo baḷisāni ca;",
"ja387:7.3": "Koyaṃ kammāragāmasmiṃ,",
"ja387:7.4": "sūciṃ vikketumicchati.",
"ja387:8.1": "Ito satthāni gacchanti,",
"ja387:8.2": "Kammantā vividhā puthū;",
"ja387:8.3": "Koyaṃ kammāragāmasmiṃ,",
"ja387:8.4": "Sūciṃ vikketumicchati”.",
"ja387:9.1": "“Sūciṃ kammāragāmasmiṃ,",
"ja387:9.2": "vikketabbā pajānatā;",
"ja387:9.3": "Ācariyāva jānanti,",
"ja387:9.4": "kammaṃ sukatadukkaṭaṃ.",
"ja387:10.1": "Imañce te pitā bhadde,",
"ja387:10.2": "Sūciṃ jaññā mayā kataṃ;",
"ja387:10.3": "Tayā ca maṃ nimanteyya,",
"ja387:10.4": "Yañcatthaññaṃ ghare dhanan”ti.",
"ja387:11.1": "Sūcijātakaṃ dutiyaṃ."
}