{
"ja307:1.1": "Jātaka",
"ja307:2.1": "Catukkanipāta",
"ja307:3.1": "Kāliṅgavagga",
"ja307:4.1": "7. Palāsajātaka",
"ja307:5.1": "“Acetanaṃ brāhmaṇa assuṇantaṃ,",
"ja307:5.2": "Jāno ajānantamimaṃ palāsaṃ;",
"ja307:5.3": "Āraddhaviriyo dhuvaṃ appamatto,",
"ja307:5.4": "Sukhaseyyaṃ pucchasi kissa hetu”.",
"ja307:6.1": "“Dūre suto ceva brahā ca rukkho,",
"ja307:6.2": "Dese ṭhito bhūtanivāsarūpo;",
"ja307:6.3": "Tasmā namassāmi imaṃ palāsaṃ,",
"ja307:6.4": "Ye cettha bhūtā te dhanassa hetu”.",
"ja307:7.1": "“So te karissāmi yathānubhāvaṃ,",
"ja307:7.2": "Kataññutaṃ brāhmaṇa pekkhamāno;",
"ja307:7.3": "Kathañhi āgamma sataṃ sakāse,",
"ja307:7.4": "Moghāni te assu pariphanditāni.",
"ja307:8.1": "Yo tindukarukkhassa paro pilakkho,",
"ja307:8.2": "Parivārito pubbayañño uḷāro;",
"ja307:8.3": "Tassesa mūlasmiṃ nidhi nikhāto,",
"ja307:8.4": "Adāyādo gaccha taṃ uddharāhī”ti.",
"ja307:9.1": "Palāsajātakaṃ sattamaṃ."
}