{
"ja529:1.1": "Jātaka",
"ja529:2.1": "Saṭṭhinipāta",
"ja529:3.1": "Soṇakavagga",
"ja529:4.1": "1 Soṇakajātaka",
"ja529:5.1": "“Tassa sutvā sataṃ dammi,",
"ja529:5.2": "sahassaṃ diṭṭha soṇakaṃ;",
"ja529:5.3": "Ko me soṇakamakkhāti,",
"ja529:5.4": "sahāyaṃ paṃsukīḷitaṃ”.",
"ja529:6.1": "“Athabravī māṇavako,",
"ja529:6.2": "daharo pañcacūḷako;",
"ja529:6.3": "Mayhaṃ sutvā sataṃ dehi,",
"ja529:6.4": "sahassaṃ diṭṭha soṇakaṃ;",
"ja529:6.5": "Ahaṃ te soṇakakkhissaṃ,",
"ja529:6.6": "sahāyaṃ paṃsukīḷitaṃ”.",
"ja529:7.1": "“Katamasmiṃ so janapade,",
"ja529:7.2": "raṭṭhesu nigamesu ca;",
"ja529:7.3": "Kattha soṇakamaddakkhi,",
"ja529:7.4": "taṃ me akkhāhi pucchito”.",
"ja529:8.1": "“Taveva deva vijite,",
"ja529:8.2": "tavevuyyānabhūmiyā;",
"ja529:8.3": "Ujuvaṃsā mahāsālā,",
"ja529:8.4": "nīlobhāsā manoramā.",
"ja529:9.1": "Tiṭṭhanti meghasamānā,",
"ja529:9.2": "rammā aññoññanissitā;",
"ja529:9.3": "Tesaṃ mūlamhi soṇako,",
"ja529:9.4": "jhāyatī anupādano;",
"ja529:9.5": "Upādānesu lokesu,",
"ja529:9.6": "ḍayhamānesu nibbuto”.",
"ja529:10.1": "Tato ca rājā pāyāsi,",
"ja529:10.2": "senāya caturaṅgiyā;",
"ja529:10.3": "Kārāpetvā samaṃ maggaṃ,",
"ja529:10.4": "agamā yena soṇako.",
"ja529:11.1": "Uyyānabhūmiṃ gantvāna,",
"ja529:11.2": "vicaranto brahāvane;",
"ja529:11.3": "Āsīnaṃ soṇakaṃ dakkhi,",
"ja529:11.4": "ḍayhamānesu nibbutaṃ.",
"ja529:12.1": "“Kapaṇo vatayaṃ bhikkhu,",
"ja529:12.2": "muṇḍo saṅghāṭipāruto;",
"ja529:12.3": "Amātiko apitiko,",
"ja529:12.4": "rukkhamūlasmi jhāyati”.",
"ja529:13.1": "Imaṃ vākyaṃ nisāmetvā,",
"ja529:13.2": "Soṇako etadabravi;",
"ja529:13.3": "“Na rāja kapaṇo hoti,",
"ja529:13.4": "Dhammaṃ kāyena phassayaṃ.",
"ja529:14.1": "Yo ca dhammaṃ niraṃkatvā,",
"ja529:14.2": "Adhammamanuvattati;",
"ja529:14.3": "Sa rāja kapaṇo hoti,",
"ja529:14.4": "Pāpo pāpaparāyaṇo”.",
"ja529:15.1": "“Arindamoti me nāmaṃ,",
"ja529:15.2": "kāsirājāti maṃ vidū;",
"ja529:15.3": "Kacci bhoto sukhasseyyā,",
"ja529:15.4": "idha pattassa soṇaka”.",
"ja529:16.1": "“Sadāpi bhadramadhanassa,",
"ja529:16.2": "Anāgārassa bhikkhuno;",
"ja529:16.3": "Na tesaṃ koṭṭhe openti,",
"ja529:16.4": "Na kumbhiṃ na khaḷopiyaṃ;",
"ja529:16.5": "Paraniṭṭhitamesānā,",
"ja529:16.6": "Tena yāpenti subbatā.",
"ja529:17.1": "Dutiyampi bhadramadhanassa,",
"ja529:17.2": "Anāgārassa bhikkhuno;",
"ja529:17.3": "Anavajjapiṇḍo bhottabbo,",
"ja529:17.4": "Na ca kocūparodhati.",
"ja529:18.1": "Tatiyampi bhadramadhanassa,",
"ja529:18.2": "Anāgārassa bhikkhuno;",
"ja529:18.3": "Nibbuto piṇḍo bhottabbo,",
"ja529:18.4": "Na ca kocūparodhati.",
"ja529:19.1": "Catutthampi bhadramadhanassa,",
"ja529:19.2": "Anāgārassa bhikkhuno;",
"ja529:19.3": "Muttassa raṭṭhe carato,",
"ja529:19.4": "Saṅgo yassa na vijjati.",
"ja529:20.1": "Pañcamampi bhadramadhanassa,",
"ja529:20.2": "Anāgārassa bhikkhuno;",
"ja529:20.3": "Nagaramhi ḍayhamānamhi,",
"ja529:20.4": "Nāssa kiñci aḍayhatha.",
"ja529:21.1": "Chaṭṭhampi bhadramadhanassa,",
"ja529:21.2": "Anāgārassa bhikkhuno;",
"ja529:21.3": "Raṭṭhe vilumpamānamhi,",
"ja529:21.4": "Nāssa kiñci ahīratha.",
"ja529:22.1": "Sattamampi bhadramadhanassa,",
"ja529:22.2": "Anāgārassa bhikkhuno;",
"ja529:22.3": "Corehi rakkhitaṃ maggaṃ,",
"ja529:22.4": "Ye caññe paripanthikā;",
"ja529:22.5": "Pattacīvaramādāya,",
"ja529:22.6": "Sotthiṃ gacchati subbato.",
"ja529:23.1": "Aṭṭhamampi bhadramadhanassa,",
"ja529:23.2": "Anāgārassa bhikkhuno;",
"ja529:23.3": "Yaṃ yaṃ disaṃ pakkamati,",
"ja529:23.4": "Anapekkhova gacchati”.",
"ja529:24.1": "“Bahūni samaṇabhadrāni,",
"ja529:24.2": "ye tvaṃ bhikkhu pasaṃsasi;",
"ja529:24.3": "Ahañca giddho kāmesu,",
"ja529:24.4": "kathaṃ kāhāmi soṇaka.",
"ja529:25.1": "Piyā me mānusā kāmā,",
"ja529:25.2": "atho dibyāpi me piyā;",
"ja529:25.3": "Atha kena nu vaṇṇena,",
"ja529:25.4": "ubho loke labhāmase”.",
"ja529:26.1": "“Kāme giddhā kāmaratā,",
"ja529:26.2": "kāmesu adhimucchitā;",
"ja529:26.3": "Narā pāpāni katvāna,",
"ja529:26.4": "upapajjanti duggatiṃ.",
"ja529:27.1": "Ye ca kāme pahantvāna,",
"ja529:27.2": "nikkhantā akutobhayā;",
"ja529:27.3": "Ekodibhāvādhigatā,",
"ja529:27.4": "na te gacchanti duggatiṃ.",
"ja529:28.1": "Upamaṃ te karissāmi,",
"ja529:28.2": "taṃ suṇohi arindama;",
"ja529:28.3": "Upamāya midhekacce,",
"ja529:28.4": "atthaṃ jānanti paṇḍitā.",
"ja529:29.1": "Gaṅgāya kuṇapaṃ disvā,",
"ja529:29.2": "vuyhamānaṃ mahaṇṇave;",
"ja529:29.3": "Vāyaso samacintesi,",
"ja529:29.4": "appapañño acetaso.",
"ja529:30.1": "‘Yānañca vatidaṃ laddhaṃ,",
"ja529:30.2": "bhakkho cāyaṃ anappako’;",
"ja529:30.3": "Tattha rattiṃ tattha divā,",
"ja529:30.4": "tattheva nirato mano.",
"ja529:31.1": "Khādaṃ nāgassa maṃsāni,",
"ja529:31.2": "pivaṃ bhāgīrathodakaṃ;",
"ja529:31.3": "Sampassaṃ vanacetyāni,",
"ja529:31.4": "na palettha vihaṅgamo.",
"ja529:32.1": "Tañca otaraṇī gaṅgā,",
"ja529:32.2": "pamattaṃ kuṇape rataṃ;",
"ja529:32.3": "Samuddaṃ ajjhagāhāsi,",
"ja529:32.4": "agatī yattha pakkhinaṃ.",
"ja529:33.1": "So ca bhakkhaparikkhīṇo,",
"ja529:33.2": "udapatvā vihaṅgamo;",
"ja529:33.3": "Na pacchato na purato,",
"ja529:33.4": "nuttaraṃ nopi dakkhiṇaṃ.",
"ja529:34.1": "Dīpaṃ so najjhagāgañchi,",
"ja529:34.2": "agatī yattha pakkhinaṃ;",
"ja529:34.3": "So ca tattheva pāpattha,",
"ja529:34.4": "yathā dubbalako tathā.",
"ja529:35.1": "Tañca sāmuddikā macchā,",
"ja529:35.2": "kumbhīlā makarā susū;",
"ja529:35.3": "Pasayhakārā khādiṃsu,",
"ja529:35.4": "phandamānaṃ vipakkhakaṃ.",
"ja529:36.1": "Evameva tuvaṃ rāja,",
"ja529:36.2": "ye caññe kāmabhogino;",
"ja529:36.3": "Giddhā ce na vamissanti,",
"ja529:36.4": "kākapaññāva te vidū.",
"ja529:37.1": "Esā te upamā rāja,",
"ja529:37.2": "atthasandassanī katā;",
"ja529:37.3": "Tvañca paññāyase tena,",
"ja529:37.4": "yadi kāhasi vā na vā.",
"ja529:38.1": "Ekavācampi dvivācaṃ,",
"ja529:38.2": "bhaṇeyya anukampako;",
"ja529:38.3": "Tatuttariṃ na bhāseyya,",
"ja529:38.4": "dāsovayyassa santike”.",
"ja529:39.1": "Idaṃ vatvāna pakkāmi,",
"ja529:39.2": "soṇako amitabuddhimā;",
"ja529:39.3": "Vehāse antalikkhasmiṃ,",
"ja529:39.4": "anusāsitvāna khattiyaṃ.",
"ja529:40.1": "“Ko nume rājakattāro,",
"ja529:40.2": "suddā veyyattamāgatā;",
"ja529:40.3": "Rajjaṃ niyyādayissāmi,",
"ja529:40.4": "nāhaṃ rajjena matthiko.",
"ja529:41.1": "Ajjeva pabbajissāmi,",
"ja529:41.2": "Ko jaññā maraṇaṃ suve;",
"ja529:41.3": "Māhaṃ kākova dummedho,",
"ja529:41.4": "Kāmānaṃ vasamanvagaṃ”.",
"ja529:42.1": "“Atthi te daharo putto,",
"ja529:42.2": "dīghāvu raṭṭhavaḍḍhano;",
"ja529:42.3": "Taṃ rajje abhisiñcassu,",
"ja529:42.4": "so no rājā bhavissati”.",
"ja529:43.1": "“Khippaṃ kumāramānetha,",
"ja529:43.2": "dīghāvuṃ raṭṭhavaḍḍhanaṃ;",
"ja529:43.3": "Taṃ rajje abhisiñcissaṃ,",
"ja529:43.4": "so vo rājā bhavissati”.",
"ja529:44.1": "Tato kumāramānesuṃ,",
"ja529:44.2": "dīghāvuṃ raṭṭhavaḍḍhanaṃ;",
"ja529:44.3": "Taṃ disvā ālapī rājā,",
"ja529:44.4": "ekaputtaṃ manoramaṃ.",
"ja529:45.1": "“Saṭṭhi gāmasahassāni,",
"ja529:45.2": "paripuṇṇāni sabbaso;",
"ja529:45.3": "Te putta paṭipajjassu,",
"ja529:45.4": "rajjaṃ niyyādayāmi te.",
"ja529:46.1": "Ajjeva pabbajissāmi,",
"ja529:46.2": "ko jaññā maraṇaṃ suve;",
"ja529:46.3": "Māhaṃ kākova dummedho,",
"ja529:46.4": "kāmānaṃ vasamanvagaṃ.",
"ja529:47.1": "Saṭṭhi nāgasahassāni,",
"ja529:47.2": "sabbālaṅkārabhūsitā;",
"ja529:47.3": "Suvaṇṇakacchā mātaṅgā,",
"ja529:47.4": "hemakappanavāsasā.",
"ja529:48.1": "Ārūḷhā gāmaṇīyehi,",
"ja529:48.2": "tomaraṅkusapāṇibhi;",
"ja529:48.3": "Te putta paṭipajjassu,",
"ja529:48.4": "rajjaṃ niyyādayāmi te.",
"ja529:49.1": "Ajjeva pabbajissāmi,",
"ja529:49.2": "ko jaññā maraṇaṃ suve;",
"ja529:49.3": "Māhaṃ kākova dummedho,",
"ja529:49.4": "kāmānaṃ vasamanvagaṃ.",
"ja529:50.1": "Saṭṭhi assasahassāni,",
"ja529:50.2": "sabbālaṅkārabhūsitā;",
"ja529:50.3": "Ājānīyāva jātiyā,",
"ja529:50.4": "sindhavā sīghavāhino.",
"ja529:51.1": "Ārūḷhā gāmaṇīyehi,",
"ja529:51.2": "illiyācāpadhāribhi;",
"ja529:51.3": "Te putta paṭipajjassu,",
"ja529:51.4": "rajjaṃ niyyādayāmi te.",
"ja529:52.1": "Ajjeva pabbajissāmi,",
"ja529:52.2": "ko jaññā maraṇaṃ suve;",
"ja529:52.3": "Māhaṃ kākova dummedho,",
"ja529:52.4": "kāmānaṃ vasamanvagaṃ.",
"ja529:53.1": "Saṭṭhi rathasahassāni,",
"ja529:53.2": "sannaddhā ussitaddhajā;",
"ja529:53.3": "Dīpā athopi veyyagghā,",
"ja529:53.4": "sabbālaṅkārabhūsitā.",
"ja529:54.1": "Ārūḷhā gāmaṇīyehi,",
"ja529:54.2": "cāpahatthehi vammibhi;",
"ja529:54.3": "Te putta paṭipajjassu,",
"ja529:54.4": "rajjaṃ niyyādayāmi te.",
"ja529:55.1": "Ajjeva pabbajissāmi,",
"ja529:55.2": "ko jaññā maraṇaṃ suve;",
"ja529:55.3": "Māhaṃ kākova dummedho,",
"ja529:55.4": "kāmānaṃ vasamanvagaṃ.",
"ja529:56.1": "Saṭṭhi dhenusahassāni,",
"ja529:56.2": "rohaññā puṅgavūsabhā;",
"ja529:56.3": "Tā putta paṭipajjassu,",
"ja529:56.4": "rajjaṃ niyyādayāmi te.",
"ja529:57.1": "Ajjeva pabbajissāmi,",
"ja529:57.2": "ko jaññā maraṇaṃ suve;",
"ja529:57.3": "Māhaṃ kākova dummedho,",
"ja529:57.4": "kāmānaṃ vasamanvagaṃ.",
"ja529:58.1": "Soḷasitthisahassāni,",
"ja529:58.2": "sabbālaṅkārabhūsitā;",
"ja529:58.3": "Vicitravatthābharaṇā,",
"ja529:58.4": "āmuttamaṇikuṇḍalā;",
"ja529:58.5": "Tā putta paṭipajjassu,",
"ja529:58.6": "rajjaṃ niyyādayāmi te.",
"ja529:59.1": "Ajjeva pabbajissāmi,",
"ja529:59.2": "ko jaññā maraṇaṃ suve;",
"ja529:59.3": "Māhaṃ kākova dummedho,",
"ja529:59.4": "kāmānaṃ vasamanvagaṃ”.",
"ja529:60.1": "“Daharasseva me tāta,",
"ja529:60.2": "mātā matāti me sutaṃ;",
"ja529:60.3": "Tayā vinā ahaṃ tāta,",
"ja529:60.4": "jīvitumpi na ussahe.",
"ja529:61.1": "Yathā āraññakaṃ nāgaṃ,",
"ja529:61.2": "poto anveti pacchato;",
"ja529:61.3": "Jessantaṃ giriduggesu,",
"ja529:61.4": "samesu visamesu ca.",
"ja529:62.1": "Evaṃ taṃ anugacchāmi,",
"ja529:62.2": "pattamādāya pacchato;",
"ja529:62.3": "Subharo te bhavissāmi,",
"ja529:62.4": "na te hessāmi dubbharo”.",
"ja529:63.1": "“Yathā sāmuddikaṃ nāvaṃ,",
"ja529:63.2": "vāṇijānaṃ dhanesinaṃ;",
"ja529:63.3": "Vohāro tattha gaṇheyya,",
"ja529:63.4": "vāṇijā byasanī siyā.",
"ja529:64.1": "Evamevāyaṃ puttakali,",
"ja529:64.2": "antarāyakaro mama;",
"ja529:64.3": "Imaṃ kumāraṃ pāpetha,",
"ja529:64.4": "pāsādaṃ rativaḍḍhanaṃ.",
"ja529:65.1": "Tattha kambusahatthāyo,",
"ja529:65.2": "yathā sakkaṃva accharā;",
"ja529:65.3": "Tā naṃ tattha ramessanti,",
"ja529:65.4": "tāhi ceso ramissati.",
"ja529:66.1": "Tato kumāraṃ pāpesuṃ,",
"ja529:66.2": "pāsādaṃ rativaḍḍhanaṃ;",
"ja529:66.3": "Taṃ disvā avacuṃ kaññā,",
"ja529:66.4": "dīghāvuṃ raṭṭhavaḍḍhanaṃ.",
"ja529:67.1": "Devatā nusi gandhabbo,",
"ja529:67.2": "adu sakko purindado;",
"ja529:67.3": "Ko vā tvaṃ kassa vā putto,",
"ja529:67.4": "kathaṃ jānemu taṃ mayaṃ”.",
"ja529:68.1": "“Namhi devo na gandhabbo,",
"ja529:68.2": "Nāpi sakko purindado;",
"ja529:68.3": "Kāsirañño ahaṃ putto,",
"ja529:68.4": "Dīghāvu raṭṭhavaḍḍhano;",
"ja529:68.5": "Mamaṃ bharatha bhaddaṃ vo,",
"ja529:68.6": "Ahaṃ bhattā bhavāmi vo”.",
"ja529:69.1": "Taṃ tattha avacuṃ kaññā,",
"ja529:69.2": "dīghāvuṃ raṭṭhavaḍḍhanaṃ;",
"ja529:69.3": "“Kuhiṃ rājā anuppatto,",
"ja529:69.4": "ito rājā kuhiṃ gato”.",
"ja529:70.1": "“Paṅkaṃ rājā atikkanto,",
"ja529:70.2": "thale rājā patiṭṭhito;",
"ja529:70.3": "Akaṇṭakaṃ agahanaṃ,",
"ja529:70.4": "paṭipanno mahāpathaṃ.",
"ja529:71.1": "Ahañca paṭipannosmi,",
"ja529:71.2": "maggaṃ duggatigāminaṃ;",
"ja529:71.3": "Sakaṇṭakaṃ sagahanaṃ,",
"ja529:71.4": "yena gacchanti duggatiṃ”.",
"ja529:72.1": "“Tassa te svāgataṃ rāja,",
"ja529:72.2": "sīhasseva giribbajaṃ;",
"ja529:72.3": "Anusāsa mahārāja,",
"ja529:72.4": "tvaṃ no sabbāsamissaro”ti.",
"ja529:73.1": "Soṇakajātakaṃ paṭhamaṃ."
}