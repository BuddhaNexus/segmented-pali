{
"ja454:1.1": "Jātaka",
"ja454:2.1": "Dasakanipāta",
"ja454:3.1": "Catudvāravagga",
"ja454:4.1": "16. Ghaṭapaṇḍitajātaka",
"ja454:5.1": "“Uṭṭhehi kaṇha kiṃ sesi,",
"ja454:5.2": "Ko attho supanena te;",
"ja454:5.3": "Yopi tuyhaṃ sako bhātā,",
"ja454:5.4": "Hadayaṃ cakkhu ca dakkhiṇaṃ;",
"ja454:5.5": "Tassa vātā balīyanti,",
"ja454:5.6": "Ghaṭo jappati kesava”.",
"ja454:6.1": "“Tassa taṃ vacanaṃ sutvā,",
"ja454:6.2": "rohiṇeyyassa kesavo;",
"ja454:6.3": "Taramānarūpo vuṭṭhāsi,",
"ja454:6.4": "bhātusokena aṭṭito”.",
"ja454:7.1": "“Kiṃ nu ummattarūpova,",
"ja454:7.2": "kevalaṃ dvārakaṃ imaṃ;",
"ja454:7.3": "Saso sasoti lapasi,",
"ja454:7.4": "ko nu te sasamāhari”.",
"ja454:8.1": "“Sovaṇṇamayaṃ maṇīmayaṃ,",
"ja454:8.2": "Lohamayaṃ atha rūpiyāmayaṃ;",
"ja454:8.3": "Saṅkhasilāpavāḷamayaṃ,",
"ja454:8.4": "Kārayissāmi te sasaṃ”.",
"ja454:9.1": "“Santi aññepi sasakā,",
"ja454:9.2": "araññe vanagocarā;",
"ja454:9.3": "Tepi te ānayissāmi,",
"ja454:9.4": "kīdisaṃ sasamicchasi”.",
"ja454:10.1": "“Na cāhamete icchāmi,",
"ja454:10.2": "ye sasā pathavissitā;",
"ja454:10.3": "Candato sasamicchāmi,",
"ja454:10.4": "taṃ me ohara kesava”.",
"ja454:11.1": "“So nūna madhuraṃ ñāti,",
"ja454:11.2": "jīvitaṃ vijahissasi;",
"ja454:11.3": "Apatthiyaṃ yo patthayasi,",
"ja454:11.4": "candato sasamicchasi”.",
"ja454:12.1": "“Evañce kaṇha jānāsi,",
"ja454:12.2": "yadaññamanusāsasi;",
"ja454:12.3": "Kasmā pure mataṃ puttaṃ,",
"ja454:12.4": "ajjāpi manusocasi”.",
"ja454:13.1": "“Yaṃ na labbhā manussena,",
"ja454:13.2": "amanussena vā puna;",
"ja454:13.3": "Jāto me mā marī putto,",
"ja454:13.4": "kuto labbhā alabbhiyaṃ.",
"ja454:14.1": "Na mantā mūlabhesajjā,",
"ja454:14.2": "osadhehi dhanena vā;",
"ja454:14.3": "Sakkā ānayituṃ kaṇha,",
"ja454:14.4": "yaṃ petamanusocasi”.",
"ja454:15.1": "“Yassa etādisā assu,",
"ja454:15.2": "amaccā purisapaṇḍitā;",
"ja454:15.3": "Yathā nijjhāpaye ajja,",
"ja454:15.4": "ghaṭo purisapaṇḍito.",
"ja454:16.1": "Ādittaṃ vata maṃ santaṃ,",
"ja454:16.2": "ghatasittaṃva pāvakaṃ;",
"ja454:16.3": "Vārinā viya osiñcaṃ,",
"ja454:16.4": "sabbaṃ nibbāpaye daraṃ.",
"ja454:17.1": "Abbahī vata me sallaṃ,",
"ja454:17.2": "yamāsi hadayassitaṃ;",
"ja454:17.3": "Yo me sokaparetassa,",
"ja454:17.4": "puttasokaṃ apānudi.",
"ja454:18.1": "Sohaṃ abbūḷhasallosmi,",
"ja454:18.2": "vītasoko anāvilo;",
"ja454:18.3": "Na socāmi na rodāmi,",
"ja454:18.4": "tava sutvāna māṇava”.",
"ja454:19.1": "“Evaṃ karonti sappaññā,",
"ja454:19.2": "Ye honti anukampakā;",
"ja454:19.3": "Nivattayanti sokamhā,",
"ja454:19.4": "Ghaṭo jeṭṭhaṃva bhātaran”ti. #1527",
"ja454:20.1": "Ghaṭapaṇḍitajātakaṃ soḷasamaṃ.",
"ja454:21.1": "Dasakanipātaṃ niṭṭhitaṃ.",
"ja454:22.1": "Tassuddānaṃ",
"ja454:23.1": "Daḷha kaṇha dhanañjaya saṅkhavaro,",
"ja454:23.2": "Raja sattaha kassa ca takkalinā;",
"ja454:23.3": "Dhammaṃ kukkuṭa kuṇḍali bhojanadā,",
"ja454:23.4": "Cakkavāka subhūrisa sotthi ghaṭoti."
}