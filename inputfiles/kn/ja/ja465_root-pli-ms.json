{
"ja465:1.1": "Jātaka",
"ja465:2.1": "Dvādasakanipāta",
"ja465:3.1": "Cūḷakuṇālavagga",
"ja465:4.1": "2. Bhaddasālajātaka",
"ja465:5.1": "“Kā tvaṃ suddhehi vatthehi,",
"ja465:5.2": "aghe vehāyasaṃ ṭhitā;",
"ja465:5.3": "Kena tyāssūni vattanti,",
"ja465:5.4": "kuto taṃ bhayamāgataṃ”.",
"ja465:6.1": "“Taveva deva vijite,",
"ja465:6.2": "bhaddasāloti maṃ vidū;",
"ja465:6.3": "Saṭṭhi vassasahassāni,",
"ja465:6.4": "tiṭṭhato pūjitassa me.",
"ja465:7.1": "Kārayantā nagarāni,",
"ja465:7.2": "agāre ca disampati;",
"ja465:7.3": "Vividhe cāpi pāsāde,",
"ja465:7.4": "na maṃ te accamaññisuṃ;",
"ja465:7.5": "Yatheva maṃ te pūjesuṃ,",
"ja465:7.6": "tatheva tvampi pūjaya”.",
"ja465:8.1": "“Taṃ ivāhaṃ na passāmi,",
"ja465:8.2": "thūlaṃ kāyena te dumaṃ;",
"ja465:8.3": "Ārohapariṇāhena,",
"ja465:8.4": "abhirūposi jātiyā.",
"ja465:9.1": "Pāsādaṃ kārayissāmi,",
"ja465:9.2": "ekatthambhaṃ manoramaṃ;",
"ja465:9.3": "Tattha taṃ upanessāmi,",
"ja465:9.4": "ciraṃ te yakkha jīvitaṃ”.",
"ja465:10.1": "“Evaṃ cittaṃ udapādi,",
"ja465:10.2": "sarīrena vinābhāvo;",
"ja465:10.3": "Puthuso maṃ vikantitvā,",
"ja465:10.4": "khaṇḍaso avakantatha.",
"ja465:11.1": "Agge ca chetvā majjhe ca,",
"ja465:11.2": "pacchā mūlamhi chindatha;",
"ja465:11.3": "Evaṃ me chijjamānassa,",
"ja465:11.4": "na dukkhaṃ maraṇaṃ siyā”.",
"ja465:12.1": "“Hatthapādaṃ yathā chinde,",
"ja465:12.2": "Kaṇṇanāsañca jīvato;",
"ja465:12.3": "Tato pacchā siro chinde,",
"ja465:12.4": "Taṃ dukkhaṃ maraṇaṃ siyā.",
"ja465:13.1": "Sukhaṃ nu khaṇḍaso chinnaṃ,",
"ja465:13.2": "bhaddasāla vanappati;",
"ja465:13.3": "Kiṃhetu kiṃ upādāya,",
"ja465:13.4": "khaṇḍaso chinnamicchasi”.",
"ja465:14.1": "“Yañca hetumupādāya,",
"ja465:14.2": "hetuṃ dhammūpasaṃhitaṃ;",
"ja465:14.3": "Khaṇḍaso chinnamicchāmi,",
"ja465:14.4": "mahārāja suṇohi me.",
"ja465:15.1": "Ñātī me sukhasaṃvaddhā,",
"ja465:15.2": "mama passe nivātajā;",
"ja465:15.3": "Tepihaṃ upahiṃseyyaṃ,",
"ja465:15.4": "paresaṃ asukhocitaṃ”.",
"ja465:16.1": "“Ceteyyarūpaṃ cetesi,",
"ja465:16.2": "bhaddasāla vanappati;",
"ja465:16.3": "Hitakāmosi ñātīnaṃ,",
"ja465:16.4": "abhayaṃ samma dammi te”ti.",
"ja465:17.1": "Bhaddasālajātakaṃ dutiyaṃ."
}