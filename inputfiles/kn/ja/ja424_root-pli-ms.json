{
  "ja424:0.1": "Jātaka ",
  "ja424:0.2": "Aṭṭhakanipāta ",
  "ja424:0.3": "Kaccānivagga ",
  "ja424:0.4": "8. Ādittajātaka ",
  "ja424:1.1": "“Ādittasmiṁ agārasmiṁ, ",
  "ja424:1.2": "yaṁ nīharati bhājanaṁ; ",
  "ja424:1.3": "Taṁ tassa hoti atthāya, ",
  "ja424:1.4": "no ca yaṁ tattha ḍayhati. ",
  "ja424:2.1": "Evamādīpito loko, ",
  "ja424:2.2": "jarāya maraṇena ca; ",
  "ja424:2.3": "Nīharetheva dānena, ",
  "ja424:2.4": "dinnaṁ hoti sunīhataṁ”. ",
  "ja424:3.1": "“Yo dhammaladdhassa dadāti dānaṁ, ",
  "ja424:3.2": "Uṭṭhānaviriyādhigatassa jantu; ",
  "ja424:3.3": "Atikkamma so vetaraṇiṁ yamassa, ",
  "ja424:3.4": "Dibbāni ṭhānāni upeti macco. ",
  "ja424:4.1": "Dānañca yuddhañca samānamāhu, ",
  "ja424:4.2": "Appāpi santā bahuke jinanti; ",
  "ja424:4.3": "Appampi ce saddahāno dadāti, ",
  "ja424:4.4": "Teneva so hoti sukhī parattha. ",
  "ja424:5.1": "Viceyya dānaṁ sugatappasatthaṁ, ",
  "ja424:5.2": "Ye dakkhiṇeyyā idha jīvaloke; ",
  "ja424:5.3": "Etesu dinnāni mahapphalāni, ",
  "ja424:5.4": "Bījāni vuttāni yathā sukhette. ",
  "ja424:6.1": "Yo pāṇabhūtāni aheṭhayaṁ caraṁ, ",
  "ja424:6.2": "Parūpavādā na karoti pāpaṁ; ",
  "ja424:6.3": "Bhīruṁ pasaṁsanti na tattha sūraṁ, ",
  "ja424:6.4": "Bhayā hi santo na karonti pāpaṁ. ",
  "ja424:7.1": "Hīnena brahmacariyena, ",
  "ja424:7.2": "khattiye upapajjati; ",
  "ja424:7.3": "Majjhimena ca devattaṁ, ",
  "ja424:7.4": "uttamena visujjhati. ",
  "ja424:8.1": "Addhā hi dānaṁ bahudhā pasatthaṁ, ",
  "ja424:8.2": "Dānā ca kho dhammapadaṁva seyyo; ",
  "ja424:8.3": "Pubbeva hi pubbatareva santo, ",
  "ja424:8.4": "Nibbānamevajjhagamuṁ sapaññā”ti. ",
  "ja424:9.1": "Ādittajātakaṁ aṭṭhamaṁ. "
}