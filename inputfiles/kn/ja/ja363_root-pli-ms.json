{
"ja363:1.1": "Jātaka",
"ja363:2.1": "Pañcakanipāta",
"ja363:3.1": "Vaṇṇārohavagga",
"ja363:4.1": "3. Hirijātaka",
"ja363:5.1": "“Hiriṃ tarantaṃ vijigucchamānaṃ,",
"ja363:5.2": "Tavāhamasmī iti bhāsamānaṃ;",
"ja363:5.3": "Seyyāni kammāni anādiyantaṃ,",
"ja363:5.4": "Neso mamanti iti naṃ vijaññā.",
"ja363:6.1": "Yañhi kayirā tañhi vade,",
"ja363:6.2": "yaṃ na kayirā na taṃ vade;",
"ja363:6.3": "Akarontaṃ bhāsamānaṃ,",
"ja363:6.4": "parijānanti paṇḍitā.",
"ja363:7.1": "Na so mitto yo sadā appamatto,",
"ja363:7.2": "Bhedāsaṅkī randhamevānupassī;",
"ja363:7.3": "Yasmiñca setī urasīva putto,",
"ja363:7.4": "Sa ve mitto yo abhejjo parehi.",
"ja363:8.1": "Pāmojjakaraṇaṃ ṭhānaṃ,",
"ja363:8.2": "pasaṃsāvahanaṃ sukhaṃ;",
"ja363:8.3": "Phalānisaṃso bhāveti,",
"ja363:8.4": "vahanto porisaṃ dhuraṃ.",
"ja363:9.1": "Pavivekarasaṃ pitvā,",
"ja363:9.2": "rasaṃ upasamassa ca;",
"ja363:9.3": "Niddaro hoti nippāpo,",
"ja363:9.4": "dhammappītirasaṃ pivan”ti.",
"ja363:10.1": "Hirijātakaṃ tatiyaṃ."
}