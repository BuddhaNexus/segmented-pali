{
"ja544:1.1": "Jātaka",
"ja544:2.1": "Mahānipāta",
"ja544:3.1": "Mūgapakkhavagga",
"ja544:4.1": "7 Candakumārajātaka",
"ja544:5.1": "Rājāsi luddakammo,",
"ja544:5.2": "Ekarājā pupphavatīyā;",
"ja544:5.3": "So pucchi brahmabandhuṃ,",
"ja544:5.4": "Khaṇḍahālaṃ purohitaṃ mūḷhaṃ.",
"ja544:6.1": "“Saggāna maggamācikkha,",
"ja544:6.2": "Tvaṃsi brāhmaṇa dhammavinayakusalo;",
"ja544:6.3": "Yathā ito vajanti sugatiṃ,",
"ja544:6.4": "Narā puññāni katvāna”.",
"ja544:7.1": "“Atidānaṃ daditvāna,",
"ja544:7.2": "avajjhe deva ghātetvā;",
"ja544:7.3": "Evaṃ vajanti sugatiṃ,",
"ja544:7.4": "narā puññāni katvāna”.",
"ja544:8.1": "“Kiṃ pana taṃ atidānaṃ,",
"ja544:8.2": "Ke ca avajjhā imasmi lokasmiṃ;",
"ja544:8.3": "Etañca kho no akkhāhi,",
"ja544:8.4": "Yajissāmi dadāmi dānāni”.",
"ja544:9.1": "“Puttehi deva yajitabbaṃ,",
"ja544:9.2": "Mahesīhi negamehi ca;",
"ja544:9.3": "Usabhehi ājāniyehi catūhi,",
"ja544:9.4": "Sabbacatukkena deva yajitabbaṃ”.",
"ja544:10.1": "Taṃ sutvā antepure,",
"ja544:10.2": "Kumārā mahesiyo ca haññantu;",
"ja544:10.3": "Eko ahosi nigghoso,",
"ja544:10.4": "Bhismā accuggato saddo.",
"ja544:11.1": "“Gacchatha vadetha kumāre,",
"ja544:11.2": "Candaṃ sūriyañca bhaddasenañca;",
"ja544:11.3": "Sūrañca vāmagottañca,",
"ja544:11.4": "Pacurā kira hotha yaññatthāya.",
"ja544:12.1": "Kumāriyopi vadetha,",
"ja544:12.2": "Upasenaṃ kokilañca muditañca;",
"ja544:12.3": "Nandañcāpi kumāriṃ,",
"ja544:12.4": "Pacurā kira hotha yaññatthāya.",
"ja544:13.1": "Vijayampi mayhaṃ mahesiṃ,",
"ja544:13.2": "Erāvatiṃ kesiniṃ sunandañca;",
"ja544:13.3": "Lakkhaṇavarūpapannā,",
"ja544:13.4": "Pacurā kira hotha yaññatthāya.",
"ja544:14.1": "Gahapatayo ca vadetha,",
"ja544:14.2": "Puṇṇamukhaṃ bhaddiyaṃ siṅgālañca;",
"ja544:14.3": "Vaḍḍhañcāpi gahapatiṃ,",
"ja544:14.4": "Pacurā kira hotha yaññatthāya”.",
"ja544:15.1": "Te tattha gahapatayo,",
"ja544:15.2": "Avocisuṃ samāgatā puttadāraparikiṇṇā;",
"ja544:15.3": "“Sabbeva sikhino deva karohi,",
"ja544:15.4": "Atha vā no dāse sāvehi”.",
"ja544:16.1": "“Abhayaṅkarampi me hatthiṃ,",
"ja544:16.2": "Nāḷāgiriṃ accuggataṃ varuṇadantaṃ;",
"ja544:16.3": "Ānetha kho ne khippaṃ,",
"ja544:16.4": "Yaññatthāya bhavissanti.",
"ja544:17.1": "Assaratanampi kesiṃ,",
"ja544:17.2": "Surāmukhaṃ puṇṇakaṃ vinatakañca;",
"ja544:17.3": "Ānetha kho ne khippaṃ,",
"ja544:17.4": "Yaññatthāya bhavissanti.",
"ja544:18.1": "Usabhampi yūthapatiṃ anojaṃ,",
"ja544:18.2": "Nisabhaṃ gavampatiṃ tepi mayhaṃ ānetha;",
"ja544:18.3": "Samūha karontu sabbaṃ,",
"ja544:18.4": "Yajissāmi dadāmi dānāni.",
"ja544:19.1": "Sabbaṃ paṭiyādetha,",
"ja544:19.2": "Yaññaṃ pana uggatamhi sūriyamhi;",
"ja544:19.3": "Āṇāpetha ca kumāre,",
"ja544:19.4": "Abhiramantu imaṃ rattiṃ.",
"ja544:20.1": "Sabbaṃ upaṭṭhapetha,",
"ja544:20.2": "Yaññaṃ pana uggatamhi sūriyamhi;",
"ja544:20.3": "Vadetha dāni kumāre,",
"ja544:20.4": "Ajja kho pacchimā ratti”.",
"ja544:21.1": "Taṃtaṃ mātā avaca,",
"ja544:21.2": "Rodantī āgantvā vimānato;",
"ja544:21.3": "“Yañño kira te putta,",
"ja544:21.4": "Bhavissati catūhi puttehi”.",
"ja544:22.1": "“Sabbepi mayhaṃ puttā cattā,",
"ja544:22.2": "candasmiṃ haññamānasmiṃ;",
"ja544:22.3": "Puttehi yaññaṃ yajitvāna,",
"ja544:22.4": "sugatiṃ saggaṃ gamissāmi”.",
"ja544:23.1": "“Mā taṃ putta saddahesi,",
"ja544:23.2": "Sugati kira hoti puttayaññena;",
"ja544:23.3": "Nirayāneso maggo,",
"ja544:23.4": "Neso maggo hi saggānaṃ.",
"ja544:24.1": "Dānāni dehi koṇḍañña,",
"ja544:24.2": "Ahiṃsā sabbabhūtabhabyānaṃ;",
"ja544:24.3": "Esa maggo sugatiyā,",
"ja544:24.4": "Na ca maggo puttayaññena”.",
"ja544:25.1": "“Ācariyānaṃ vacanā,",
"ja544:25.2": "Ghātessaṃ candañca sūriyañca;",
"ja544:25.3": "Puttehi yaññaṃ yajitvāna duccajehi,",
"ja544:25.4": "Sugatiṃ saggaṃ gamissāmi”.",
"ja544:26.1": "Taṃtaṃ pitāpi avaca,",
"ja544:26.2": "Vasavattī orasaṃ sakaṃ puttaṃ;",
"ja544:26.3": "“Yañño kira te putta,",
"ja544:26.4": "Bhavissati catūhi puttehi”.",
"ja544:27.1": "“Sabbepi mayhaṃ puttā cattā,",
"ja544:27.2": "candasmiṃ haññamānasmiṃ;",
"ja544:27.3": "Puttehi yaññaṃ yajitvāna,",
"ja544:27.4": "sugatiṃ saggaṃ gamissāmi”.",
"ja544:28.1": "“Mā taṃ putta saddahesi,",
"ja544:28.2": "Sugati kira hoti puttayaññena;",
"ja544:28.3": "Nirayāneso maggo,",
"ja544:28.4": "Neso maggo hi saggānaṃ.",
"ja544:29.1": "Dānāni dehi koṇḍañña,",
"ja544:29.2": "Ahiṃsā sabbabhūtabhabyānaṃ;",
"ja544:29.3": "Esa maggo sugatiyā,",
"ja544:29.4": "Na ca maggo puttayaññena”.",
"ja544:30.1": "“Ācariyānaṃ vacanā,",
"ja544:30.2": "Ghātessaṃ candañca sūriyañca;",
"ja544:30.3": "Puttehi yaññaṃ yajitvāna duccajehi,",
"ja544:30.4": "Sugatiṃ saggaṃ gamissāmi”.",
"ja544:31.1": "“Dānāni dehi koṇḍañña,",
"ja544:31.2": "Ahiṃsā sabbabhūtabhabyānaṃ;",
"ja544:31.3": "Puttaparivuto tuvaṃ,",
"ja544:31.4": "Raṭṭhaṃ janapadañca pālehi”.",
"ja544:32.1": "“Mā no deva avadhi,",
"ja544:32.2": "Dāse no dehi khaṇḍahālassa;",
"ja544:32.3": "Api nigaḷabandhakāpi,",
"ja544:32.4": "Hatthī asse ca pālema.",
"ja544:33.1": "Mā no deva avadhi,",
"ja544:33.2": "Dāse no dehi khaṇḍahālassa;",
"ja544:33.3": "Api nigaḷabandhakāpi,",
"ja544:33.4": "Hatthichakaṇāni ujjhema.",
"ja544:34.1": "Mā no deva avadhi,",
"ja544:34.2": "Dāse no dehi khaṇḍahālassa;",
"ja544:34.3": "Api nigaḷabandhakāpi,",
"ja544:34.4": "Assachakaṇāni ujjhema.",
"ja544:35.1": "Mā no deva avadhi,",
"ja544:35.2": "Dāse no dehi khaṇḍahālassa;",
"ja544:35.3": "Yassa honti tava kāmā,",
"ja544:35.4": "Api raṭṭhā pabbājitā;",
"ja544:35.5": "Bhikkhācariyaṃ carissāma”.",
"ja544:36.1": "“Dukkhaṃ kho me janayatha,",
"ja544:36.2": "Vilapantā jīvitassa kāmā hi;",
"ja544:36.3": "Muñcetha dāni kumāre,",
"ja544:36.4": "Alampi me hotu puttayaññena”.",
"ja544:37.1": "“Pubbeva khosi me vutto,",
"ja544:37.2": "Dukkaraṃ durabhisambhavañcetaṃ;",
"ja544:37.3": "Atha no upakkhaṭassa yaññassa,",
"ja544:37.4": "Kasmā karosi vikkhepaṃ.",
"ja544:38.1": "Sabbe vajanti sugatiṃ,",
"ja544:38.2": "Ye yajanti yepi yājenti;",
"ja544:38.3": "Ye cāpi anumodanti,",
"ja544:38.4": "Yajantānaṃ edisaṃ mahāyaññaṃ”.",
"ja544:39.1": "“Atha kissa jano pubbe,",
"ja544:39.2": "Sotthānaṃ brāhmaṇe avācesi;",
"ja544:39.3": "Atha no akāraṇasmā,",
"ja544:39.4": "Yaññatthāya deva ghātesi.",
"ja544:40.1": "Pubbeva no daharakāle,",
"ja544:40.2": "na hanesi na ghātesi;",
"ja544:40.3": "Daharamhā yobbanaṃ pattā,",
"ja544:40.4": "adūsakā tāta haññāma.",
"ja544:41.1": "Hatthigate assagate,",
"ja544:41.2": "Sannaddhe passa no mahārāja;",
"ja544:41.3": "Yuddhe vā yujjhamāne vā,",
"ja544:41.4": "Na hi mādisā sūrā honti yaññatthāya.",
"ja544:42.1": "Paccante vāpi kupite,",
"ja544:42.2": "Aṭavīsu vā mādise niyojenti;",
"ja544:42.3": "Atha no akāraṇasmā,",
"ja544:42.4": "Abhūmiyaṃ tāta haññāma.",
"ja544:43.1": "Yāpi hi tā sakuṇiyo,",
"ja544:43.2": "Vasanti tiṇagharāni katvāna;",
"ja544:43.3": "Tāsampi piyā puttā,",
"ja544:43.4": "Atha no tvaṃ deva ghātesi.",
"ja544:44.1": "Mā tassa saddahesi,",
"ja544:44.2": "Na maṃ khaṇḍahālo ghāteyya;",
"ja544:44.3": "Mamañhi so ghātetvāna,",
"ja544:44.4": "Anantarā tampi deva ghāteyya.",
"ja544:45.1": "Gāmavaraṃ nigamavaraṃ dadanti,",
"ja544:45.2": "Bhogampissa mahārāja;",
"ja544:45.3": "Athaggapiṇḍikāpi,",
"ja544:45.4": "Kule kule hete bhuñjanti.",
"ja544:46.1": "Tesampi tādisānaṃ,",
"ja544:46.2": "Icchanti dubbhituṃ mahārāja;",
"ja544:46.3": "Yebhuyyena ete,",
"ja544:46.4": "Akataññuno brāhmaṇā deva.",
"ja544:47.1": "Mā no deva avadhi,",
"ja544:47.2": "Dāse no dehi khaṇḍahālassa;",
"ja544:47.3": "Api nigaḷabandhakāpi,",
"ja544:47.4": "Hatthī asse ca pālema.",
"ja544:48.1": "Mā no deva avadhi,",
"ja544:48.2": "Dāse no dehi khaṇḍahālassa;",
"ja544:48.3": "Api nigaḷabandhakāpi,",
"ja544:48.4": "Hatthichakaṇāni ujjhema.",
"ja544:49.1": "Mā no deva avadhi,",
"ja544:49.2": "Dāse no dehi khaṇḍahālassa;",
"ja544:49.3": "Api nigaḷabandhakāpi,",
"ja544:49.4": "Assachakaṇāni ujjhema.",
"ja544:50.1": "Mā no deva avadhi,",
"ja544:50.2": "Dāse no dehi khaṇḍahālassa;",
"ja544:50.3": "Yassa honti tava kāmā,",
"ja544:50.4": "Api raṭṭhā pabbājitā;",
"ja544:50.5": "Bhikkhācariyaṃ carissāma”.",
"ja544:51.1": "“Dukkhaṃ kho me janayatha,",
"ja544:51.2": "Vilapantā jīvitassa kāmā hi;",
"ja544:51.3": "Muñcetha dāni kumāre,",
"ja544:51.4": "Alampi me hotu puttayaññena”.",
"ja544:52.1": "“Pubbeva khosi me vutto,",
"ja544:52.2": "Dukkaraṃ durabhisambhavañcetaṃ;",
"ja544:52.3": "Atha no upakkhaṭassa yaññassa,",
"ja544:52.4": "Kasmā karosi vikkhepaṃ.",
"ja544:53.1": "Sabbe vajanti sugatiṃ,",
"ja544:53.2": "Ye yajanti yepi yājenti;",
"ja544:53.3": "Ye cāpi anumodanti,",
"ja544:53.4": "Yajantānaṃ edisaṃ mahāyaññaṃ”.",
"ja544:54.1": "“Yadi kira yajitvā puttehi,",
"ja544:54.2": "Devalokaṃ ito cutā yanti;",
"ja544:54.3": "Brāhmaṇo tāva yajatu,",
"ja544:54.4": "Pacchāpi yajasi tuvaṃ rājā.",
"ja544:55.1": "Yadi kira yajitvā puttehi,",
"ja544:55.2": "Devalokaṃ ito cutā yanti;",
"ja544:55.3": "Esveva khaṇḍahālo,",
"ja544:55.4": "Yajataṃ sakehi puttehi.",
"ja544:56.1": "Evaṃ jānanto khaṇḍahālo,",
"ja544:56.2": "kiṃ puttake na ghātesi;",
"ja544:56.3": "Sabbañca ñātijanaṃ,",
"ja544:56.4": "attānañca na ghātesi.",
"ja544:57.1": "Sabbe vajanti nirayaṃ,",
"ja544:57.2": "Ye yajanti yepi yājenti;",
"ja544:57.3": "Ye cāpi anumodanti,",
"ja544:57.4": "Yajantānaṃ edisaṃ mahāyaññaṃ.",
"ja544:58.1": "Sace hi so sujjhati yo hanāti,",
"ja544:58.2": "Hatopi so saggamupeti ṭhānaṃ;",
"ja544:58.3": "Bhovādi bhovādina mārayeyyuṃ,",
"ja544:58.4": "Ye cāpi tesaṃ abhisaddaheyyuṃ.",
"ja544:59.1": "Kathañca kira puttakāmāyo,",
"ja544:59.2": "Gahapatayo gharaṇiyo ca;",
"ja544:59.3": "Nagaramhi na uparavanti rājānaṃ,",
"ja544:59.4": "‘Mā ghātayi orasaṃ puttaṃ’.",
"ja544:60.1": "Kathañca kira puttakāmāyo,",
"ja544:60.2": "Gahapatayo gharaṇiyo ca;",
"ja544:60.3": "Nagaramhi na uparavanti rājānaṃ,",
"ja544:60.4": "‘Mā ghātayi atrajaṃ puttaṃ’.",
"ja544:61.1": "Rañño camhi atthakāmo,",
"ja544:61.2": "Hito ca sabbajanapadassa;",
"ja544:61.3": "Na koci assa paṭighaṃ,",
"ja544:61.4": "Mayā jānapado na pavedeti.",
"ja544:62.1": "Gacchatha vo gharaṇiyo,",
"ja544:62.2": "Tātañca vadetha khaṇḍahālañca;",
"ja544:62.3": "‘Mā ghātetha kumāre,",
"ja544:62.4": "Adūsake sīhasaṅkāse’.",
"ja544:63.1": "Gacchatha vo gharaṇiyo,",
"ja544:63.2": "Tātañca vadetha khaṇḍahālañca;",
"ja544:63.3": "‘Mā ghātetha kumāre,",
"ja544:63.4": "Apekkhite sabbalokassa’.",
"ja544:64.1": "Yannūnāhaṃ jāyeyyaṃ,",
"ja544:64.2": "Rathakārakulesu vā;",
"ja544:64.3": "Pukkusakulesu vā vessesu vā jāyeyyaṃ,",
"ja544:64.4": "Na hajja maṃ rāja yaññe ghāteyya”.",
"ja544:65.1": "“Sabbā sīmantiniyo gacchatha,",
"ja544:65.2": "Ayyassa khaṇḍahālassa;",
"ja544:65.3": "Pādesu nipatatha,",
"ja544:65.4": "Aparādhāhaṃ na passāmi.",
"ja544:66.1": "Sabbā sīmantiniyo gacchatha,",
"ja544:66.2": "Ayyassa khaṇḍahālassa;",
"ja544:66.3": "Pādesu nipatatha,",
"ja544:66.4": "Kinte bhante mayaṃ adūsema”.",
"ja544:67.1": "Kapaṇā vilapati selā,",
"ja544:67.2": "Disvāna bhātare upanītatte;",
"ja544:67.3": "“Yañño kira me ukkhipito,",
"ja544:67.4": "Tātena saggakāmena”.",
"ja544:68.1": "Āvatti parivatti ca,",
"ja544:68.2": "vasulo sammukhā rañño;",
"ja544:68.3": "“Mā no pitaraṃ avadhi,",
"ja544:68.4": "daharamhāyobbanaṃ pattā”.",
"ja544:69.1": "“Eso te vasula pitā,",
"ja544:69.2": "Samehi pitarā saha;",
"ja544:69.3": "Dukkhaṃ kho me janayasi,",
"ja544:69.4": "Vilapanto antepurasmiṃ;",
"ja544:69.5": "Muñcetha dāni kumāre,",
"ja544:69.6": "Alampi me hotu puttayaññena”.",
"ja544:70.1": "“Pubbeva khosi me vutto,",
"ja544:70.2": "Dukkaraṃ durabhisambhavañcetaṃ;",
"ja544:70.3": "Atha no upakkhaṭassa yaññassa,",
"ja544:70.4": "Kasmā karosi vikkhepaṃ.",
"ja544:71.1": "Sabbe vajanti sugatiṃ,",
"ja544:71.2": "Ye yajanti yepi yājenti;",
"ja544:71.3": "Ye cāpi anumodanti,",
"ja544:71.4": "Yajantānaṃ edisaṃ mahāyaññaṃ.",
"ja544:72.1": "Sabbaratanassa yañño upakkhaṭo,",
"ja544:72.2": "Ekarāja tava paṭiyatto;",
"ja544:72.3": "Abhinikkhamassu deva,",
"ja544:72.4": "Saggaṃ gato tvaṃ pamodissasi”.",
"ja544:73.1": "Daharā sattasatā etā,",
"ja544:73.2": "Candakumārassa bhariyāyo;",
"ja544:73.3": "Kese pakiritvāna,",
"ja544:73.4": "Rodantiyo maggamanuyāyisuṃ.",
"ja544:74.1": "Aparā pana sokena,",
"ja544:74.2": "Nikkhantā nandane viya devā;",
"ja544:74.3": "Kese pakiritvāna,",
"ja544:74.4": "Rodantiyo maggamanuyāyiṃsu.",
"ja544:75.1": "“Kāsikasucivatthadharā,",
"ja544:75.2": "Kuṇḍalino agalucandanavilittā;",
"ja544:75.3": "Niyyanti candasūriyā,",
"ja544:75.4": "Yaññatthāya ekarājassa.",
"ja544:76.1": "Kāsikasucivatthadharā,",
"ja544:76.2": "Kuṇḍalino agalucandanavilittā;",
"ja544:76.3": "Niyyanti candasūriyā,",
"ja544:76.4": "Mātu katvā hadayasokaṃ.",
"ja544:77.1": "Kāsikasucivatthadharā,",
"ja544:77.2": "Kuṇḍalino agalucandanavilittā;",
"ja544:77.3": "Niyyanti candasūriyā,",
"ja544:77.4": "Janassa katvā hadayasokaṃ.",
"ja544:78.1": "Maṃsarasabhojanā nhāpakasunhāpitā,",
"ja544:78.2": "Kuṇḍalino agalucandanavilittā;",
"ja544:78.3": "Niyyanti candasūriyā,",
"ja544:78.4": "Yaññatthāya ekarājassa.",
"ja544:79.1": "Maṃsarasabhojanā nhāpakasunhāpitā,",
"ja544:79.2": "Kuṇḍalino agalucandanavilittā;",
"ja544:79.3": "Niyyanti candasūriyā,",
"ja544:79.4": "Mātu katvā hadayasokaṃ.",
"ja544:80.1": "Maṃsarasabhojanā nhāpakasunhāpitā,",
"ja544:80.2": "Kuṇḍalino agalucandanavilittā;",
"ja544:80.3": "Niyyanti candasūriyā,",
"ja544:80.4": "Janassa katvā hadayasokaṃ.",
"ja544:81.1": "Yassu pubbe hatthivaradhuragate,",
"ja544:81.2": "Hatthīhi anuvajanti;",
"ja544:81.3": "Tyajja candasūriyā,",
"ja544:81.4": "Ubhova pattikā yanti.",
"ja544:82.1": "Yassu pubbe assavaradhuragate,",
"ja544:82.2": "Assehi anuvajanti;",
"ja544:82.3": "Tyajja candasūriyā,",
"ja544:82.4": "Ubhova pattikā yanti.",
"ja544:83.1": "Yassu pubbe rathavaradhuragate,",
"ja544:83.2": "Rathehi anuvajanti;",
"ja544:83.3": "Tyajja candasūriyā,",
"ja544:83.4": "Ubhova pattikā yanti.",
"ja544:84.1": "Yehissu pubbe niyyaṃsu,",
