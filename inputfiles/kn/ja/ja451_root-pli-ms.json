{
"ja451:1.1": "Jātaka",
"ja451:2.1": "Dasakanipāta",
"ja451:3.1": "Catudvāravagga",
"ja451:4.1": "13. Cakkavākajātaka",
"ja451:5.1": "“Vaṇṇavā abhirūposi,",
"ja451:5.2": "ghano sañjātarohito;",
"ja451:5.3": "Cakkavāka surūposi,",
"ja451:5.4": "vippasannamukhindriyo.",
"ja451:6.1": "Pāṭhīnaṃ pāvusaṃ macchaṃ,",
"ja451:6.2": "balajaṃ muñjarohitaṃ;",
"ja451:6.3": "Gaṅgāya tīre nisinno,",
"ja451:6.4": "evaṃ bhuñjasi bhojanaṃ”.",
"ja451:7.1": "“Na vāhametaṃ bhuñjāmi,",
"ja451:7.2": "Jaṅgalānodakāni vā;",
"ja451:7.3": "Aññatra sevālapaṇakā,",
"ja451:7.4": "Etaṃ me samma bhojanaṃ”.",
"ja451:8.1": "“Na vāhametaṃ saddahāmi,",
"ja451:8.2": "cakkavākassa bhojanaṃ;",
"ja451:8.3": "Ahampi samma bhuñjāmi,",
"ja451:8.4": "gāme loṇiyateliyaṃ.",
"ja451:9.1": "Manussesu kataṃ bhattaṃ,",
"ja451:9.2": "suciṃ maṃsūpasecanaṃ;",
"ja451:9.3": "Na ca me tādiso vaṇṇo,",
"ja451:9.4": "cakkavāka yathā tuvaṃ”.",
"ja451:10.1": "“Sampassaṃ attani veraṃ,",
"ja451:10.2": "hiṃsayaṃ mānusiṃ pajaṃ;",
"ja451:10.3": "Utrasto ghasasī bhīto,",
"ja451:10.4": "tena vaṇṇo tavediso.",
"ja451:11.1": "Sabbalokaviruddhosi,",
"ja451:11.2": "dhaṅka pāpena kammunā;",
"ja451:11.3": "Laddho piṇḍo na pīṇeti,",
"ja451:11.4": "tena vaṇṇo tavediso.",
"ja451:12.1": "Ahampi samma bhuñjāmi,",
"ja451:12.2": "ahiṃsaṃ sabbapāṇinaṃ;",
"ja451:12.3": "Appossukko nirāsaṅkī,",
"ja451:12.4": "asoko akutobhayo.",
"ja451:13.1": "So karassu ānubhāvaṃ,",
"ja451:13.2": "vītivattassu sīliyaṃ;",
"ja451:13.3": "Ahiṃsāya cara loke,",
"ja451:13.4": "piyo hohisi maṃmiva.",
"ja451:14.1": "Yo na hanti na ghāteti,",
"ja451:14.2": "na jināti na jāpaye;",
"ja451:14.3": "Mettaṃso sabbabhūtesu,",
"ja451:14.4": "veraṃ tassa na kenacī”ti.",
"ja451:15.1": "Cakkavākajātakaṃ terasamaṃ."
}