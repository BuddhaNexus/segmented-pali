{
"ja393:1.1": "Jātaka",
"ja393:2.1": "Chakkanipāta",
"ja393:3.1": "Kharaputtavagga",
"ja393:4.1": "8. Vighāsādajātaka",
"ja393:5.1": "“Susukhaṃ vata jīvanti,",
"ja393:5.2": "ye janā vighāsādino;",
"ja393:5.3": "Diṭṭheva dhamme pāsaṃsā,",
"ja393:5.4": "samparāye ca suggatī”.",
"ja393:6.1": "“Sukassa bhāsamānassa,",
"ja393:6.2": "na nisāmetha paṇḍitā;",
"ja393:6.3": "Idaṃ suṇātha sodariyā,",
"ja393:6.4": "amhevāyaṃ pasaṃsati”.",
"ja393:7.1": "“Nāhaṃ tumhe pasaṃsāmi,",
"ja393:7.2": "kuṇapādā suṇātha me;",
"ja393:7.3": "Ucchiṭṭhabhojino tumhe,",
"ja393:7.4": "na tumhe vighāsādino”.",
"ja393:8.1": "“Sattavassā pabbajitā,",
"ja393:8.2": "mejjhāraññe sikhaṇḍino;",
"ja393:8.3": "Vighāseneva yāpentā,",
"ja393:8.4": "mayañce bhoto gārayhā;",
"ja393:8.5": "Ke nu bhoto pasaṃsiyā”.",
"ja393:9.1": "“Tumhe sīhānaṃ byagghānaṃ,",
"ja393:9.2": "vāḷānañcāvasiṭṭhakaṃ;",
"ja393:9.3": "Ucchiṭṭheneva yāpentā,",
"ja393:9.4": "maññivho vighāsādino.",
"ja393:10.1": "Ye brāhmaṇassa samaṇassa,",
"ja393:10.2": "aññassa vā vanibbino;",
"ja393:10.3": "Datvāva sesaṃ bhuñjanti,",
"ja393:10.4": "te janā vighāsādino”ti.",
"ja393:11.1": "Vighāsādajātakaṃ aṭṭhamaṃ."
}