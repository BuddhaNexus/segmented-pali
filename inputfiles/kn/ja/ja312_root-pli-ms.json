{
"ja312:1.1": "Jātaka",
"ja312:2.1": "Catukkanipāta",
"ja312:3.1": "Pucimandavagga",
"ja312:4.1": "2. Kassapamandiyajātaka",
"ja312:5.1": "“Api kassapa mandiyā,",
"ja312:5.2": "yuvā sapati hanti vā;",
"ja312:5.3": "Sabbaṃ taṃ khamate dhīro,",
"ja312:5.4": "paṇḍito taṃ titikkhati.",
"ja312:6.1": "Sacepi santo vivadanti,",
"ja312:6.2": "khippaṃ sandhīyare puna;",
"ja312:6.3": "Bālā pattāva bhijjanti,",
"ja312:6.4": "na te samathamajjhagū.",
"ja312:7.1": "Ete bhiyyo samāyanti,",
"ja312:7.2": "sandhi tesaṃ na jīrati;",
"ja312:7.3": "Yo cādhipannaṃ jānāti,",
"ja312:7.4": "yo ca jānāti desanaṃ.",
"ja312:8.1": "Eso hi uttaritaro,",
"ja312:8.2": "Bhāravaho dhuraddharo;",
"ja312:8.3": "Yo paresādhipannānaṃ,",
"ja312:8.4": "Sayaṃ sandhātumarahatī”ti.",
"ja312:9.1": "Kassapamandiyajātakaṃ dutiyaṃ."
}