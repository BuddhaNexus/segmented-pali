{
"ja453:1.1": "Jātaka",
"ja453:2.1": "Dasakanipāta",
"ja453:3.1": "Catudvāravagga",
"ja453:4.1": "15. Mahāmaṅgalajātaka",
"ja453:5.1": "“Kiṃsu naro jappamadhiccakāle,",
"ja453:5.2": "Kaṃ vā vijjaṃ katamaṃ vā sutānaṃ;",
"ja453:5.3": "So macco asmiñca paramhi loke,",
"ja453:5.4": "Kathaṃ karo sotthānena gutto”.",
"ja453:6.1": "“Yassa devā pitaro ca sabbe,",
"ja453:6.2": "Sarīsapā sabbabhūtāni cāpi;",
"ja453:6.3": "Mettāya niccaṃ apacitāni honti,",
"ja453:6.4": "Bhūtesu ve sotthānaṃ tadāhu”.",
"ja453:7.1": "“Yo sabbalokassa nivātavutti,",
"ja453:7.2": "Itthīpumānaṃ sahadārakānaṃ;",
"ja453:7.3": "Khantā duruttānamappaṭikūlavādī,",
"ja453:7.4": "Adhivāsanaṃ sotthānaṃ tadāhu.",
"ja453:8.1": "Yo nāvajānāti sahāyamitte,",
"ja453:8.2": "Sippena kulyāhi dhanena jaccā;",
"ja453:8.3": "Rucipañño atthakāle matīmā,",
"ja453:8.4": "Sahāyesu ve sotthānaṃ tadāhu.",
"ja453:9.1": "Mittāni ve yassa bhavanti santo,",
"ja453:9.2": "Saṃvissatthā avisaṃvādakassa;",
"ja453:9.3": "Na mittadubbhī saṃvibhāgī dhanena,",
"ja453:9.4": "Mittesu ve sotthānaṃ tadāhu.",
"ja453:10.1": "Yassa bhariyā tulyavayā samaggā,",
"ja453:10.2": "Anubbatā dhammakāmā pajātā;",
"ja453:10.3": "Koliniyā sīlavatī patibbatā,",
"ja453:10.4": "Dāresu ve sotthānaṃ tadāhu.",
"ja453:11.1": "Yassa rājā bhūtapati yasassī,",
"ja453:11.2": "Jānāti soceyyaṃ parakkamañca;",
"ja453:11.3": "Advejjhatā suhadayaṃ mamanti,",
"ja453:11.4": "Rājūsu ve sotthānaṃ tadāhu.",
"ja453:12.1": "Annañca pānañca dadāti saddho,",
"ja453:12.2": "Mālañca gandhañca vilepanañca;",
"ja453:12.3": "Pasannacitto anumodamāno,",
"ja453:12.4": "Saggesu ve sotthānaṃ tadāhu.",
"ja453:13.1": "Yamariyadhammena punanti vuddhā,",
"ja453:13.2": "Ārādhitā samacariyāya santo;",
"ja453:13.3": "Bahussutā isayo sīlavanto,",
"ja453:13.4": "Arahantamajjhe sotthānaṃ tadāhu.",
"ja453:14.1": "Etāni kho sotthānāni loke,",
"ja453:14.2": "Viññuppasatthāni sukhudrayāni;",
"ja453:14.3": "Tānīdha sevetha naro sapañño,",
"ja453:14.4": "Na hi maṅgale kiñcanamatthi saccan”ti.",
"ja453:15.1": "Mahāmaṅgalajātakaṃ pannarasamaṃ."
}