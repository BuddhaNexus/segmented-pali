{
"ja432:1.1": "Jātaka",
"ja432:2.1": "Navakanipāta",
"ja432:3.1": "Gijjhavagga",
"ja432:4.1": "6. Padakusalamāṇavajātaka",
"ja432:5.1": "“Bahussutaṃ cittakathiṃ,",
"ja432:5.2": "gaṅgā vahati pāṭaliṃ;",
"ja432:5.3": "Vuyhamānaka bhaddante,",
"ja432:5.4": "ekaṃ me dehi gāthakaṃ”.",
"ja432:6.1": "“Yena siñcanti dukkhitaṃ,",
"ja432:6.2": "yena siñcanti āturaṃ;",
"ja432:6.3": "Tassa majjhe marissāmi,",
"ja432:6.4": "jātaṃ saraṇato bhayaṃ”.",
"ja432:7.1": "“Yattha bījāni rūhanti,",
"ja432:7.2": "sattā yattha patiṭṭhitā;",
"ja432:7.3": "Sā me sīsaṃ nipīḷeti,",
"ja432:7.4": "jātaṃ saraṇato bhayaṃ”.",
"ja432:8.1": "“Yena bhattāni paccanti,",
"ja432:8.2": "sītaṃ yena vihaññati;",
"ja432:8.3": "So maṃ ḍahati gattāni,",
"ja432:8.4": "jātaṃ saraṇato bhayaṃ”.",
"ja432:9.1": "“Yena bhuttena yāpenti,",
"ja432:9.2": "puthū brāhmaṇakhattiyā;",
"ja432:9.3": "So maṃ bhutto byāpādeti,",
"ja432:9.4": "jātaṃ saraṇato bhayaṃ”.",
"ja432:10.1": "“Gimhānaṃ pacchime māse,",
"ja432:10.2": "vātamicchanti paṇḍitā;",
"ja432:10.3": "So maṃ bhañjati gattāni,",
"ja432:10.4": "jātaṃ saraṇato bhayaṃ”.",
"ja432:11.1": "“Yaṃ nissitā jagatiruhaṃ,",
"ja432:11.2": "svāyaṃ aggiṃ pamuñcati;",
"ja432:11.3": "Disā bhajatha vakkaṅgā,",
"ja432:11.4": "jātaṃ saraṇato bhayaṃ”.",
"ja432:12.1": "“Yamānayiṃ somanassaṃ,",
"ja432:12.2": "māliniṃ candanussadaṃ;",
"ja432:12.3": "Sā maṃ gharā nicchubhati,",
"ja432:12.4": "jātaṃ saraṇato bhayaṃ”.",
"ja432:13.1": "“Yena jātena nandissaṃ,",
"ja432:13.2": "yassa ca bhavamicchisaṃ;",
"ja432:13.3": "So maṃ gharā nicchubhati,",
"ja432:13.4": "jātaṃ saraṇato bhayaṃ”.",
"ja432:14.1": "“Suṇantu me jānapadā,",
"ja432:14.2": "negamā ca samāgatā;",
"ja432:14.3": "Yatodakaṃ tadādittaṃ,",
"ja432:14.4": "yato khemaṃ tato bhayaṃ.",
"ja432:15.1": "Rājā vilumpate raṭṭhaṃ,",
"ja432:15.2": "brāhmaṇo ca purohito;",
"ja432:15.3": "Attaguttā viharatha,",
"ja432:15.4": "jātaṃ saraṇato bhayan”ti.",
"ja432:16.1": "Padakusalamāṇavajātakaṃ chaṭṭhaṃ."
}