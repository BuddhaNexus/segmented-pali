{
"ja476:1.1": "Jātaka",
"ja476:2.1": "Terasakanipāta",
"ja476:3.1": "Ambavagga",
"ja476:4.1": "3. Javanahaṃsajātaka",
"ja476:5.1": "“Idheva haṃsa nipata,",
"ja476:5.2": "piyaṃ me tava dassanaṃ;",
"ja476:5.3": "Issarosi anuppatto,",
"ja476:5.4": "yamidhatthi pavedaya”.",
"ja476:6.1": "“Savanena ekassa piyā bhavanti,",
"ja476:6.2": "Disvā panekassa viyeti chando;",
"ja476:6.3": "Disvā ca sutvā ca piyā bhavanti,",
"ja476:6.4": "Kaccinnu me pīyasi dassanena.",
"ja476:7.1": "Savanena piyo mesi,",
"ja476:7.2": "bhiyyo cāgamma dassanaṃ;",
"ja476:7.3": "Evaṃ piyadassano me,",
"ja476:7.4": "vasa haṃsa mamantike”.",
"ja476:8.1": "“Vaseyyāma tavāgāre,",
"ja476:8.2": "niccaṃ sakkatapūjitā;",
"ja476:8.3": "Matto ca ekadā vajje,",
"ja476:8.4": "‘haṃsarājaṃ pacantu me’”.",
"ja476:9.1": "“Dhiratthu taṃ majjapānaṃ,",
"ja476:9.2": "yaṃ me piyataraṃ tayā;",
"ja476:9.3": "Na cāpi majjaṃ pissāmi,",
"ja476:9.4": "yāva me vacchasī ghare”.",
"ja476:10.1": "“Suvijānaṃ siṅgālānaṃ,",
"ja476:10.2": "sakuṇānañca vassitaṃ;",
"ja476:10.3": "Manussavassitaṃ rāja,",
"ja476:10.4": "dubbijānataraṃ tato.",
"ja476:11.1": "Api ce maññatī poso,",
"ja476:11.2": "ñāti mitto sakhāti vā;",
"ja476:11.3": "Yo pubbe sumano hutvā,",
"ja476:11.4": "pacchā sampajjate diso.",
"ja476:12.1": "Yasmiṃ mano nivisati,",
"ja476:12.2": "avidūre sahāpi so;",
"ja476:12.3": "Santikepi hi so dūre,",
"ja476:12.4": "yasmiṃ nāvisate mano.",
"ja476:13.1": "Antopi so hoti pasannacitto,",
"ja476:13.2": "Pāraṃ samuddassa pasannacitto;",
"ja476:13.3": "Antopi so hoti paduṭṭhacitto,",
"ja476:13.4": "Pāraṃ samuddassa paduṭṭhacitto.",
"ja476:14.1": "Saṃvasantā vivasanti,",
"ja476:14.2": "ye disā te rathesabha;",
"ja476:14.3": "Ārā santo saṃvasanti,",
"ja476:14.4": "manasā raṭṭhavaḍḍhana.",
"ja476:15.1": "Aticiraṃ nivāsena,",
"ja476:15.2": "piyo bhavati appiyo;",
"ja476:15.3": "Āmanta kho taṃ gacchāma,",
"ja476:15.4": "purā te homa appiyā”.",
"ja476:16.1": "“Evañce yācamānānaṃ,",
"ja476:16.2": "Añjaliṃ nāvabujjhasi;",
"ja476:16.3": "Paricārakānaṃ sataṃ,",
"ja476:16.4": "Vacanaṃ na karosi no;",
"ja476:16.5": "Evaṃ taṃ abhiyācāma,",
"ja476:16.6": "Puna kayirāsi pariyāyaṃ”.",
"ja476:17.1": "“Evañce no viharataṃ,",
"ja476:17.2": "antarāyo na hessati;",
"ja476:17.3": "Tuyhañcāpi mahārāja,",
"ja476:17.4": "mayhañca raṭṭhavaḍḍhana;",
"ja476:17.5": "Appeva nāma passemu,",
"ja476:17.6": "ahorattānamaccaye”ti.",
"ja476:18.1": "Javanahaṃsajātakaṃ tatiyaṃ."
}