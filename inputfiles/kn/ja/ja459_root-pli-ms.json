{
"ja459:1.1": "Jātaka",
"ja459:2.1": "Ekādasakanipāta",
"ja459:3.1": "Mātuposakavagga",
"ja459:4.1": "5. Pānīyajātaka",
"ja459:5.1": "“Mitto mittassa pānīyaṃ,",
"ja459:5.2": "adinnaṃ paribhuñjisaṃ;",
"ja459:5.3": "Tena pacchā vijigucchiṃ,",
"ja459:5.4": "taṃ pāpaṃ pakataṃ mayā;",
"ja459:5.5": "Mā puna akaraṃ pāpaṃ,",
"ja459:5.6": "tasmā pabbajito ahaṃ.",
"ja459:6.1": "Paradārañca disvāna,",
"ja459:6.2": "chando me udapajjatha;",
"ja459:6.3": "Tena pacchā vijigucchiṃ,",
"ja459:6.4": "taṃ pāpaṃ pakataṃ mayā;",
"ja459:6.5": "Mā puna akaraṃ pāpaṃ,",
"ja459:6.6": "tasmā pabbajito ahaṃ.",
"ja459:7.1": "Pitaraṃ me mahārāja,",
"ja459:7.2": "corā agaṇhu kānane;",
"ja459:7.3": "Tesāhaṃ pucchito jānaṃ,",
"ja459:7.4": "aññathā naṃ viyākariṃ.",
"ja459:8.1": "Tena pacchā vijigucchiṃ,",
"ja459:8.2": "taṃ pāpaṃ pakataṃ mayā;",
"ja459:8.3": "Mā puna akaraṃ pāpaṃ,",
"ja459:8.4": "tasmā pabbajito ahaṃ.",
"ja459:9.1": "Pāṇātipātamakaruṃ,",
"ja459:9.2": "somayāge upaṭṭhite;",
"ja459:9.3": "Tesāhaṃ samanuññāsiṃ.",
"ja459:10.1": "Tena pacchā vijigucchiṃ,",
"ja459:10.2": "taṃ pāpaṃ pakataṃ mayā;",
"ja459:10.3": "Mā puna akaraṃ pāpaṃ,",
"ja459:10.4": "tasmā pabbajito ahaṃ.",
"ja459:11.1": "Surāmerayamādhukā,",
"ja459:11.2": "ye janā paṭhamāsu no;",
"ja459:11.3": "Bahūnaṃ te anatthāya,",
"ja459:11.4": "majjapānamakappayuṃ;",
"ja459:11.5": "Tesāhaṃ samanuññāsiṃ.",
"ja459:12.1": "Tena pacchā vijigucchiṃ,",
"ja459:12.2": "taṃ pāpaṃ pakataṃ mayā;",
"ja459:12.3": "Mā puna akaraṃ pāpaṃ,",
"ja459:12.4": "tasmā pabbajito ahaṃ”.",
"ja459:13.1": "“Dhiratthu subahū kāme,",
"ja459:13.2": "duggandhe bahukaṇṭake;",
"ja459:13.3": "Ye ahaṃ paṭisevanto,",
"ja459:13.4": "nālabhiṃ tādisaṃ sukhaṃ”.",
"ja459:14.1": "“Mahassādā sukhā kāmā,",
"ja459:14.2": "Natthi kāmā paraṃ sukhaṃ;",
"ja459:14.3": "Ye kāme paṭisevanti,",
"ja459:14.4": "Saggaṃ te upapajjare”.",
"ja459:15.1": "“Appassādā dukhā kāmā,",
"ja459:15.2": "natthi kāmā paraṃ dukhaṃ;",
"ja459:15.3": "Ye kāme paṭisevanti,",
"ja459:15.4": "nirayaṃ te upapajjare.",
"ja459:16.1": "Asī yathā sunisito,",
"ja459:16.2": "nettiṃsova supāyiko;",
"ja459:16.3": "Sattīva urasi khittā,",
"ja459:16.4": "kāmā dukkhatarā tato.",
"ja459:17.1": "Aṅgārānaṃva jalitaṃ,",
"ja459:17.2": "kāsuṃ sādhikaporisaṃ;",
"ja459:17.3": "Phālaṃva divasantattaṃ,",
"ja459:17.4": "kāmā dukkhatarā tato.",
"ja459:18.1": "Visaṃ yathā halāhalaṃ,",
"ja459:18.2": "telaṃ pakkuthitaṃ yathā;",
"ja459:18.3": "Tambaloha vilīnaṃva,",
"ja459:18.4": "kāmā dukkhatarā tato”ti.",
"ja459:19.1": "Pānīyajātakaṃ pañcamaṃ."
}