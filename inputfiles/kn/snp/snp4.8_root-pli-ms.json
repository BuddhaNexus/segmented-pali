{
"snp4.8:1.1": "Sutta Nipāta 4.8",
"snp4.8:2.1": "Pasūrasutta",
"snp4.8:3.1": "Idheva suddhī iti vādayanti,",
"snp4.8:3.2": "Nāññesu dhammesu visuddhimāhu;",
"snp4.8:3.3": "Yaṃ nissitā tattha subhaṃ vadānā,",
"snp4.8:3.4": "Paccekasaccesu puthū niviṭṭhā.",
"snp4.8:4.1": "Te vādakāmā parisaṃ vigayha, #2",
"snp4.8:4.2": "Bālaṃ dahantī mithu aññamaññaṃ;",
"snp4.8:4.3": "Vadanti te aññasitā kathojjaṃ,",
"snp4.8:4.4": "Pasaṃsakāmā kusalā vadānā.",
"snp4.8:5.1": "Yutto kathāyaṃ parisāya majjhe, #3",
"snp4.8:5.2": "Pasaṃsamicchaṃ vinighāti hoti;",
"snp4.8:5.3": "Apāhatasmiṃ pana maṅku hoti,",
"snp4.8:5.4": "Nindāya so kuppati randhamesī.",
"snp4.8:6.1": "Yamassa vādaṃ parihīnamāhu, #4",
"snp4.8:6.2": "Apāhataṃ pañhavimaṃsakāse;",
"snp4.8:6.3": "Paridevati socati hīnavādo,",
"snp4.8:6.4": "Upaccagā manti anutthunāti.",
"snp4.8:7.1": "Ete vivādā samaṇesu jātā, #5",
"snp4.8:7.2": "Etesu ugghātinighāti hoti;",
"snp4.8:7.3": "Etampi disvā virame kathojjaṃ,",
"snp4.8:7.4": "Na haññadatthatthi pasaṃsalābhā.",
"snp4.8:8.1": "Pasaṃsito vā pana tattha hoti, #6",
"snp4.8:8.2": "Akkhāya vādaṃ parisāya majjhe;",
"snp4.8:8.3": "So hassatī unnamatī ca tena,",
"snp4.8:8.4": "Pappuyya tamatthaṃ yathā mano ahu.",
"snp4.8:9.1": "Yā unnatī sāssa vighātabhūmi, #7",
"snp4.8:9.2": "Mānātimānaṃ vadate paneso;",
"snp4.8:9.3": "Etampi disvā na vivādayetha,",
"snp4.8:9.4": "Na hi tena suddhiṃ kusalā vadanti.",
"snp4.8:10.1": "Sūro yathā rājakhādāya puṭṭho, #8",
"snp4.8:10.2": "Abhigajjameti paṭisūramicchaṃ;",
"snp4.8:10.3": "Yeneva so tena palehi sūra,",
"snp4.8:10.4": "Pubbeva natthi yadidaṃ yudhāya.",
"snp4.8:11.1": "Ye diṭṭhimuggayha vivādayanti, #9",
"snp4.8:11.2": "Idameva saccanti ca vādayanti;",
"snp4.8:11.3": "Te tvaṃ vadassū na hi tedha atthi,",
"snp4.8:11.4": "Vādamhi jāte paṭisenikattā.",
"snp4.8:12.1": "Visenikatvā pana ye caranti, #10",
"snp4.8:12.2": "Diṭṭhīhi diṭṭhiṃ avirujjhamānā;",
"snp4.8:12.3": "Tesu tvaṃ kiṃ labhetho pasūra,",
"snp4.8:12.4": "Yesīdha natthī paramuggahītaṃ.",
"snp4.8:13.1": "Atha tvaṃ pavitakkamāgamā, #11",
"snp4.8:13.2": "Manasā diṭṭhigatāni cintayanto;",
"snp4.8:13.3": "Dhonena yugaṃ samāgamā,",
"snp4.8:13.4": "Na hi tvaṃ sakkhasi sampayātaveti.",
"snp4.8:14.1": "Pasūrasuttaṃ aṭṭhamaṃ."
}