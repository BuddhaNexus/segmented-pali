{
"snp1.3:1.1": "Sutta Nipāta 1.3",
"snp1.3:2.1": "Khaggavisāṇasutta",
"snp1.3:3.1": "“Sabbesu bhūtesu nidhāya daṇḍaṃ,",
"snp1.3:3.2": "Aviheṭhayaṃ aññatarampi tesaṃ;",
"snp1.3:3.3": "Na puttamiccheyya kuto sahāyaṃ,",
"snp1.3:3.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:4.1": "“Saṃsaggajātassa bhavanti snehā, #2",
"snp1.3:4.2": "Snehanvayaṃ dukkhamidaṃ pahoti;",
"snp1.3:4.3": "Ādīnavaṃ snehajaṃ pekkhamāno,",
"snp1.3:4.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:5.1": "“Mitte suhajje anukampamāno, #3",
"snp1.3:5.2": "Hāpeti atthaṃ paṭibaddhacitto;",
"snp1.3:5.3": "Etaṃ bhayaṃ santhave pekkhamāno,",
"snp1.3:5.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:6.1": "“Vaṃso visālova yathā visatto, #4",
"snp1.3:6.2": "Puttesu dāresu ca yā apekkhā;",
"snp1.3:6.3": "Vaṃsakkaḷīrova asajjamāno,",
"snp1.3:6.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:7.1": "“Migo araññamhi yathā abaddho, #5",
"snp1.3:7.2": "Yenicchakaṃ gacchati gocarāya;",
"snp1.3:7.3": "Viññū naro seritaṃ pekkhamāno,",
"snp1.3:7.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:8.1": "“Āmantanā hoti sahāyamajjhe, #6",
"snp1.3:8.2": "Vāse ṭhāne gamane cārikāya;",
"snp1.3:8.3": "Anabhijjhitaṃ seritaṃ pekkhamāno,",
"snp1.3:8.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:9.1": "“Khiḍḍā ratī hoti sahāyamajjhe, #7",
"snp1.3:9.2": "Puttesu ca vipulaṃ hoti pemaṃ;",
"snp1.3:9.3": "Piyavippayogaṃ vijigucchamāno,",
"snp1.3:9.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:10.1": "“Cātuddiso appaṭigho ca hoti, #8",
"snp1.3:10.2": "Santussamāno itarītarena;",
"snp1.3:10.3": "Parissayānaṃ sahitā achambhī,",
"snp1.3:10.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:11.1": "“Dussaṅgahā pabbajitāpi eke, #9",
"snp1.3:11.2": "Atho gahaṭṭhā gharamāvasantā;",
"snp1.3:11.3": "Appossukko paraputtesu hutvā,",
"snp1.3:11.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:12.1": "“Oropayitvā gihibyañjanāni, #10",
"snp1.3:12.2": "Sañchinnapatto yathā koviḷāro;",
"snp1.3:12.3": "Chetvāna vīro gihibandhanāni,",
"snp1.3:12.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:13.1": "“Sace labhetha nipakaṃ sahāyaṃ, #11",
"snp1.3:13.2": "Saddhiṃ caraṃ sādhuvihāridhīraṃ;",
"snp1.3:13.3": "Abhibhuyya sabbāni parissayāni,",
"snp1.3:13.4": "Careyya tenattamano satīmā”.",
"snp1.3:14.1": "“No ce labhetha nipakaṃ sahāyaṃ, #12",
"snp1.3:14.2": "Saddhiṃ caraṃ sādhuvihāridhīraṃ;",
"snp1.3:14.3": "Rājāva raṭṭhaṃ vijitaṃ pahāya,",
"snp1.3:14.4": "Eko care mātaṅgaraññeva nāgo”.",
"snp1.3:15.1": "“Addhā pasaṃsāma sahāyasampadaṃ, #13",
"snp1.3:15.2": "Seṭṭhā samā sevitabbā sahāyā;",
"snp1.3:15.3": "Ete aladdhā anavajjabhojī,",
"snp1.3:15.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:16.1": "“Disvā suvaṇṇassa pabhassarāni, #14",
"snp1.3:16.2": "Kammāraputtena suniṭṭhitāni;",
"snp1.3:16.3": "Saṅghaṭṭamānāni duve bhujasmiṃ,",
"snp1.3:16.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:17.1": "“Evaṃ dutīyena sahā mamassa, #15",
"snp1.3:17.2": "Vācābhilāpo abhisajjanā vā;",
"snp1.3:17.3": "Etaṃ bhayaṃ āyatiṃ pekkhamāno,",
"snp1.3:17.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:18.1": "“Kāmā hi citrā madhurā manoramā, #16",
"snp1.3:18.2": "Virūparūpena mathenti cittaṃ;",
"snp1.3:18.3": "Ādīnavaṃ kāmaguṇesu disvā,",
"snp1.3:18.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:19.1": "“Ītī ca gaṇḍo ca upaddavo ca, #17",
"snp1.3:19.2": "Rogo ca sallañca bhayañca metaṃ;",
"snp1.3:19.3": "Etaṃ bhayaṃ kāmaguṇesu disvā,",
"snp1.3:19.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:20.1": "“Sītañca uṇhañca khudaṃ pipāsaṃ, #18",
"snp1.3:20.2": "Vātātape ḍaṃsasarīsape ca;",
"snp1.3:20.3": "Sabbānipetāni abhisambhavitvā,",
"snp1.3:20.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:21.1": "“Nāgova yūthāni vivajjayitvā, #19",
"snp1.3:21.2": "Sañjātakhandho padumī uḷāro;",
"snp1.3:21.3": "Yathābhirantaṃ viharaṃ araññe,",
"snp1.3:21.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:22.1": "“Aṭṭhānataṃ saṅgaṇikāratassa, #20",
"snp1.3:22.2": "Yaṃ phassaye sāmayikaṃ vimuttiṃ;",
"snp1.3:22.3": "Ādiccabandhussa vaco nisamma,",
"snp1.3:22.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:23.1": "“Diṭṭhīvisūkāni upātivatto, #21",
"snp1.3:23.2": "Patto niyāmaṃ paṭiladdhamaggo;",
"snp1.3:23.3": "Uppannañāṇomhi anaññaneyyo,",
"snp1.3:23.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:24.1": "“Nillolupo nikkuho nippipāso, #22",
"snp1.3:24.2": "Nimmakkho niddhantakasāvamoho;",
"snp1.3:24.3": "Nirāsayo sabbaloke bhavitvā,",
"snp1.3:24.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:25.1": "“Pāpaṃ sahāyaṃ parivajjayetha, #23",
"snp1.3:25.2": "Anatthadassiṃ visame niviṭṭhaṃ;",
"snp1.3:25.3": "Sayaṃ na seve pasutaṃ pamattaṃ,",
"snp1.3:25.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:26.1": "“Bahussutaṃ dhammadharaṃ bhajetha, #24",
"snp1.3:26.2": "Mittaṃ uḷāraṃ paṭibhānavantaṃ;",
"snp1.3:26.3": "Aññāya atthāni vineyya kaṅkhaṃ,",
"snp1.3:26.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:27.1": "“Khiḍḍaṃ ratiṃ kāmasukhañca loke, #25",
"snp1.3:27.2": "Analaṅkaritvā anapekkhamāno;",
"snp1.3:27.3": "Vibhūsanaṭṭhānā virato saccavādī,",
"snp1.3:27.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:28.1": "“Puttañca dāraṃ pitarañca mātaraṃ, #26",
"snp1.3:28.2": "Dhanāni dhaññāni ca bandhavāni;",
"snp1.3:28.3": "Hitvāna kāmāni yathodhikāni,",
"snp1.3:28.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:29.1": "“Saṅgo eso parittamettha sokhyaṃ, #27",
"snp1.3:29.2": "Appassādo dukkhamettha bhiyyo;",
"snp1.3:29.3": "Gaḷo eso iti ñatvā matīmā,",
"snp1.3:29.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:30.1": "“Sandālayitvāna saṃyojanāni, #28",
"snp1.3:30.2": "Jālaṃva bhetvā salilambucārī;",
"snp1.3:30.3": "Aggīva daḍḍhaṃ anivattamāno,",
"snp1.3:30.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:31.1": "“Okkhittacakkhu na ca pādalolo, #29",
"snp1.3:31.2": "Guttindriyo rakkhitamānasāno;",
"snp1.3:31.3": "Anavassuto apariḍayhamāno,",
"snp1.3:31.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:32.1": "“Ohārayitvā gihibyañjanāni, #30",
"snp1.3:32.2": "Sañchannapatto yathā pārichatto;",
"snp1.3:32.3": "Kāsāyavattho abhinikkhamitvā,",
"snp1.3:32.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:33.1": "“Rasesu gedhaṃ akaraṃ alolo, #31",
"snp1.3:33.2": "Anaññaposī sapadānacārī;",
"snp1.3:33.3": "Kule kule appaṭibaddhacitto,",
"snp1.3:33.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:34.1": "“Pahāya pañcāvaraṇāni cetaso, #32",
"snp1.3:34.2": "Upakkilese byapanujja sabbe;",
"snp1.3:34.3": "Anissito chetva sinehadosaṃ,",
"snp1.3:34.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:35.1": "“Vipiṭṭhikatvāna sukhaṃ dukhañca, #33",
"snp1.3:35.2": "Pubbeva ca somanassadomanassaṃ;",
"snp1.3:35.3": "Laddhānupekkhaṃ samathaṃ visuddhaṃ,",
"snp1.3:35.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:36.1": "“Āraddhaviriyo paramatthapattiyā, #34",
"snp1.3:36.2": "Alīnacitto akusītavutti;",
"snp1.3:36.3": "Daḷhanikkamo thāmabalūpapanno,",
"snp1.3:36.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:37.1": "“Paṭisallānaṃ jhānamariñcamāno, #35",
"snp1.3:37.2": "Dhammesu niccaṃ anudhammacārī;",
"snp1.3:37.3": "Ādīnavaṃ sammasitā bhavesu,",
"snp1.3:37.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:38.1": "“Taṇhakkhayaṃ patthayamappamatto, #36",
"snp1.3:38.2": "Aneḷamūgo sutavā satīmā;",
"snp1.3:38.3": "Saṅkhātadhammo niyato padhānavā,",
"snp1.3:38.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:39.1": "“Sīhova saddesu asantasanto, #37",
"snp1.3:39.2": "Vātova jālamhi asajjamāno;",
"snp1.3:39.3": "Padumaṃva toyena alippamāno,",
"snp1.3:39.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:40.1": "“Sīho yathā dāṭhabalī pasayha, #38",
"snp1.3:40.2": "Rājā migānaṃ abhibhuyya cārī;",
"snp1.3:40.3": "Sevetha pantāni senāsanāni,",
"snp1.3:40.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:41.1": "“Mettaṃ upekkhaṃ karuṇaṃ vimuttiṃ, #39",
"snp1.3:41.2": "Āsevamāno muditañca kāle;",
"snp1.3:41.3": "Sabbena lokena avirujjhamāno,",
"snp1.3:41.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:42.1": "“Rāgañca dosañca pahāya mohaṃ, #40",
"snp1.3:42.2": "Sandālayitvāna saṃyojanāni;",
"snp1.3:42.3": "Asantasaṃ jīvitasaṅkhayamhi,",
"snp1.3:42.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:43.1": "“Bhajanti sevanti ca kāraṇatthā, #41",
"snp1.3:43.2": "Nikkāraṇā dullabhā ajja mittā;",
"snp1.3:43.3": "Attaṭṭhapaññā asucī manussā,",
"snp1.3:43.4": "Eko care khaggavisāṇakappo”.",
"snp1.3:44.1": "Khaggavisāṇasuttaṃ tatiyaṃ."
}