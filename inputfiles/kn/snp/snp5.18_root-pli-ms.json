{
"snp5.18:1.1": "Sutta Nipāta 5.18",
"snp5.18:2.1": "Pārāyanatthutigāthā",
"snp5.18:3.1": "Idamavoca bhagavā magadhesu viharanto pāsāṇake cetiye, paricārakasoḷasānaṃbrāhmaṇānaṃ ajjhiṭṭho puṭṭho puṭṭho pañhaṃ byākāsi.",
"snp5.18:3.2": "Ekamekassa cepi pañhassa atthamaññāya dhammamaññāya dhammānudhammaṃ paṭipajjeyya, gaccheyyeva jarāmaraṇassa pāraṃ.",
"snp5.18:3.3": "Pāraṅgamanīyā ime dhammāti, tasmā imassa dhammapariyāyassa pārāyananteva adhivacanaṃ.",
"snp5.18:4.1": "Ajito tissametteyyo, #1",
"snp5.18:4.2": "puṇṇako atha mettagū;",
"snp5.18:4.3": "Dhotako upasīvo ca,",
"snp5.18:4.4": "nando ca atha hemako.",
"snp5.18:5.1": "Todeyya-kappā dubhayo, #2",
"snp5.18:5.2": "jatukaṇṇī ca paṇḍito;",
"snp5.18:5.3": "Bhadrāvudho udayo ca,",
"snp5.18:5.4": "posālo cāpi brāhmaṇo;",
"snp5.18:5.5": "Mogharājā ca medhāvī,",
"snp5.18:5.6": "piṅgiyo ca mahāisi.",
"snp5.18:6.1": "Ete buddhaṃ upāgacchuṃ, #3",
"snp5.18:6.2": "sampannacaraṇaṃ isiṃ;",
"snp5.18:6.3": "Pucchantā nipuṇe pañhe,",
"snp5.18:6.4": "buddhaseṭṭhaṃ upāgamuṃ.",
"snp5.18:7.1": "Tesaṃ buddho pabyākāsi, #4",
"snp5.18:7.2": "pañhe puṭṭho yathātathaṃ;",
"snp5.18:7.3": "Pañhānaṃ veyyākaraṇena,",
"snp5.18:7.4": "tosesi brāhmaṇe muni.",
"snp5.18:8.1": "Te tositā cakkhumatā, #5",
"snp5.18:8.2": "buddhenādiccabandhunā;",
"snp5.18:8.3": "Brahmacariyamacariṃsu,",
"snp5.18:8.4": "varapaññassa santike.",
"snp5.18:9.1": "Ekamekassa pañhassa, #6",
"snp5.18:9.2": "yathā buddhena desitaṃ;",
"snp5.18:9.3": "Tathā yo paṭipajjeyya,",
"snp5.18:9.4": "gacche pāraṃ apārato.",
"snp5.18:10.1": "Apārā pāraṃ gaccheyya, #7",
"snp5.18:10.2": "bhāvento maggamuttamaṃ;",
"snp5.18:10.3": "Maggo so pāraṃ gamanāya,",
"snp5.18:10.4": "tasmā pārāyanaṃ iti."
}