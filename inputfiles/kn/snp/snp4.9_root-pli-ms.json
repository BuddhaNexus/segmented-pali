{
"snp4.9:1.1": "Sutta Nipāta 4.9",
"snp4.9:2.1": "Māgaṇḍiyasutta",
"snp4.9:3.1": "“Disvāna taṇhaṃ aratiṃ ragañca,",
"snp4.9:3.2": "Nāhosi chando api methunasmiṃ;",
"snp4.9:3.3": "Kimevidaṃ muttakarīsapuṇṇaṃ,",
"snp4.9:3.4": "Pādāpi naṃ samphusituṃ na icche”.",
"snp4.9:4.1": "“Etādisañce ratanaṃ na icchasi, #2",
"snp4.9:4.2": "Nāriṃ narindehi bahūhi patthitaṃ;",
"snp4.9:4.3": "Diṭṭhigataṃ sīlavataṃ nu jīvitaṃ,",
"snp4.9:4.4": "Bhavūpapattiñca vadesi kīdisaṃ”.",
"snp4.9:5.1": "“Idaṃ vadāmīti na tassa hoti, #3",
"snp4.9:5.2": "māgaṇḍiyāti bhagavā",
"snp4.9:5.3": "Dhammesu niccheyya samuggahītaṃ;",
"snp4.9:5.4": "Passañca diṭṭhīsu anuggahāya,",
"snp4.9:5.5": "Ajjhattasantiṃ pacinaṃ adassaṃ”.",
"snp4.9:6.1": "“Vinicchayā yāni pakappitāni, #4",
"snp4.9:6.2": "iti māgaṇḍiyo",
"snp4.9:6.3": "Te ve munī brūsi anuggahāya;",
"snp4.9:6.4": "Ajjhattasantīti yametamatthaṃ,",
"snp4.9:6.5": "Kathaṃ nu dhīrehi paveditaṃ taṃ”.",
"snp4.9:7.1": "“Na diṭṭhiyā na sutiyā na ñāṇena, #5",
"snp4.9:7.2": "māgaṇḍiyāti bhagavā",
"snp4.9:7.3": "Sīlabbatenāpi na suddhimāha;",
"snp4.9:7.4": "Adiṭṭhiyā assutiyā añāṇā,",
"snp4.9:7.5": "Asīlatā abbatā nopi tena;",
"snp4.9:7.6": "Ete ca nissajja anuggahāya,",
"snp4.9:7.7": "Santo anissāya bhavaṃ na jappe”.",
"snp4.9:8.1": "“No ce kira diṭṭhiyā na sutiyā na ñāṇena, #6",
"snp4.9:8.2": "iti māgaṇḍiyo",
"snp4.9:8.3": "Sīlabbatenāpi na suddhimāha;",
"snp4.9:8.4": "Adiṭṭhiyā assutiyā añāṇā,",
"snp4.9:8.5": "Asīlatā abbatā nopi tena;",
"snp4.9:8.6": "Maññāmahaṃ momuhameva dhammaṃ,",
"snp4.9:8.7": "Diṭṭhiyā eke paccenti suddhiṃ”.",
"snp4.9:9.1": "“Diṭṭhañca nissāya anupucchamāno, #7",
"snp4.9:9.2": "māgaṇḍiyāti bhagavā",
"snp4.9:9.3": "Samuggahītesu pamohamāgā;",
"snp4.9:9.4": "Ito ca nāddakkhi aṇumpi saññaṃ,",
"snp4.9:9.5": "Tasmā tuvaṃ momuhato dahāsi.",
"snp4.9:10.1": "Samo visesī uda vā nihīno, #8",
"snp4.9:10.2": "Yo maññati so vivadetha tena;",
"snp4.9:10.3": "Tīsu vidhāsu avikampamāno,",
"snp4.9:10.4": "Samo visesīti na tassa hoti.",
"snp4.9:11.1": "Saccanti so brāhmaṇo kiṃ vadeyya, #9",
"snp4.9:11.2": "Musāti vā so vivadetha kena;",
"snp4.9:11.3": "Yasmiṃ samaṃ visamaṃ vāpi natthi,",
"snp4.9:11.4": "Sa kena vādaṃ paṭisaṃyujeyya.",
"snp4.9:12.1": "Okaṃ pahāya aniketasārī, #10",
"snp4.9:12.2": "Gāme akubbaṃ muni santhavāni;",
"snp4.9:12.3": "Kāmehi ritto apurakkharāno,",
"snp4.9:12.4": "Kathaṃ na viggayha janena kayirā.",
"snp4.9:13.1": "Yehi vivitto vicareyya loke, #11",
"snp4.9:13.2": "Na tāni uggayha vadeyya nāgo;",
"snp4.9:13.3": "Jalambujaṃ kaṇḍakavārijaṃ yathā,",
"snp4.9:13.4": "Jalena paṅkena canūpalittaṃ;",
"snp4.9:13.5": "Evaṃ munī santivādo agiddho,",
"snp4.9:13.6": "Kāme ca loke ca anūpalitto.",
"snp4.9:14.1": "Na vedagū diṭṭhiyāyako na mutiyā, #12",
"snp4.9:14.2": "Sa mānameti na hi tammayo so;",
"snp4.9:14.3": "Na kammunā nopi sutena neyyo,",
"snp4.9:14.4": "Anūpanīto sa nivesanesu.",
"snp4.9:15.1": "Saññāvirattassa na santi ganthā, #13",
"snp4.9:15.2": "Paññāvimuttassa na santi mohā;",
"snp4.9:15.3": "Saññañca diṭṭhiñca ye aggahesuṃ,",
"snp4.9:15.4": "Te ghaṭṭayantā vicaranti loke”ti.",
"snp4.9:16.1": "Māgaṇḍiyasuttaṃ navamaṃ."
}