{
"snp4.1:1.1": "Sutta Nipāta 4.1",
"snp4.1:2.1": "Kāmasutta",
"snp4.1:3.1": "Kāmaṃ kāmayamānassa,",
"snp4.1:3.2": "tassa ce taṃ samijjhati;",
"snp4.1:3.3": "Addhā pītimano hoti,",
"snp4.1:3.4": "laddhā macco yadicchati.",
"snp4.1:4.1": "Tassa ce kāmayānassa, #2",
"snp4.1:4.2": "chandajātassa jantuno;",
"snp4.1:4.3": "Te kāmā parihāyanti,",
"snp4.1:4.4": "sallaviddhova ruppati.",
"snp4.1:5.1": "Yo kāme parivajjeti, #3",
"snp4.1:5.2": "sappasseva padā siro;",
"snp4.1:5.3": "Somaṃ visattikaṃ loke,",
"snp4.1:5.4": "sato samativattati.",
"snp4.1:6.1": "Khettaṃ vatthuṃ hiraññaṃ vā, #4",
"snp4.1:6.2": "gavāssaṃ dāsaporisaṃ;",
"snp4.1:6.3": "Thiyo bandhū puthu kāme,",
"snp4.1:6.4": "yo naro anugijjhati.",
"snp4.1:7.1": "Abalā naṃ balīyanti, #5",
"snp4.1:7.2": "maddantenaṃ parissayā;",
"snp4.1:7.3": "Tato naṃ dukkhamanveti,",
"snp4.1:7.4": "nāvaṃ bhinnamivodakaṃ.",
"snp4.1:8.1": "Tasmā jantu sadā sato, #6",
"snp4.1:8.2": "Kāmāni parivajjaye;",
"snp4.1:8.3": "Te pahāya tare oghaṃ,",
"snp4.1:8.4": "Nāvaṃ sitvāva pāragūti.",
"snp4.1:9.1": "Kāmasuttaṃ paṭhamaṃ."
}