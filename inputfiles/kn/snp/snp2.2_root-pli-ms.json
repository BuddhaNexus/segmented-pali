{
"snp2.2:1.1": "Sutta Nipāta 2.2",
"snp2.2:2.1": "Āmagandhasutta",
"snp2.2:3.1": "“Sāmākaciṅgūlakacīnakāni ca,",
"snp2.2:3.2": "Pattapphalaṃ mūlaphalaṃ gavipphalaṃ;",
"snp2.2:3.3": "Dhammena laddhaṃ satamasnamānā,",
"snp2.2:3.4": "Na kāmakāmā alikaṃ bhaṇanti.",
"snp2.2:4.1": "Yadasnamāno sukataṃ suniṭṭhitaṃ, #2",
"snp2.2:4.2": "Parehi dinnaṃ payataṃ paṇītaṃ;",
"snp2.2:4.3": "Sālīnamannaṃ paribhuñjamāno,",
"snp2.2:4.4": "So bhuñjasī kassapa āmagandhaṃ.",
"snp2.2:5.1": "Na āmagandho mama kappatīti, #3",
"snp2.2:5.2": "Icceva tvaṃ bhāsasi brahmabandhu;",
"snp2.2:5.3": "Sālīnamannaṃ paribhuñjamāno,",
"snp2.2:5.4": "Sakuntamaṃsehi susaṅkhatehi;",
"snp2.2:5.5": "Pucchāmi taṃ kassapa etamatthaṃ,",
"snp2.2:5.6": "Kathaṃpakāro tava āmagandho”.",
"snp2.2:6.1": "“Pāṇātipāto vadhachedabandhanaṃ, #4",
"snp2.2:6.2": "Theyyaṃ musāvādo nikativañcanāni ca;",
"snp2.2:6.3": "Ajjhenakuttaṃ paradārasevanā,",
"snp2.2:6.4": "Esāmagandho na hi maṃsabhojanaṃ.",
"snp2.2:7.1": "Ye idha kāmesu asaññatā janā, #5",
"snp2.2:7.2": "Rasesu giddhā asucibhāvamassitā;",
"snp2.2:7.3": "Natthikadiṭṭhī visamā durannayā,",
"snp2.2:7.4": "Esāmagandho na hi maṃsabhojanaṃ.",
"snp2.2:8.1": "Ye lūkhasā dāruṇā piṭṭhimaṃsikā, #6",
"snp2.2:8.2": "Mittadduno nikkaruṇātimānino;",
"snp2.2:8.3": "Adānasīlā na ca denti kassaci,",
"snp2.2:8.4": "Esāmagandho na hi maṃsabhojanaṃ.",
"snp2.2:9.1": "Kodho mado thambho paccupaṭṭhāpanā, #7",
"snp2.2:9.2": "Māyā usūyā bhassasamussayo ca;",
"snp2.2:9.3": "Mānātimāno ca asabbhi santhavo,",
"snp2.2:9.4": "Esāmagandho na hi maṃsabhojanaṃ.",
"snp2.2:10.1": "Ye pāpasīlā iṇaghātasūcakā, #8",
"snp2.2:10.2": "Vohārakūṭā idha pāṭirūpikā;",
"snp2.2:10.3": "Narādhamā yedha karonti kibbisaṃ,",
"snp2.2:10.4": "Esāmagandho na hi maṃsabhojanaṃ.",
"snp2.2:11.1": "Ye idha pāṇesu asaññatā janā, #9",
"snp2.2:11.2": "Paresamādāya vihesamuyyutā;",
"snp2.2:11.3": "Dussīlaluddā pharusā anādarā,",
"snp2.2:11.4": "Esāmagandho na hi maṃsabhojanaṃ.",
"snp2.2:12.1": "Etesu giddhā viruddhātipātino, #10",
"snp2.2:12.2": "Niccuyyutā pecca tamaṃ vajanti ye;",
"snp2.2:12.3": "Patanti sattā nirayaṃ avaṃsirā,",
"snp2.2:12.4": "Esāmagandho na hi maṃsabhojanaṃ.",
"snp2.2:13.1": "Na macchamaṃsānamanāsakattaṃ, #11",
"snp2.2:13.2": "Na naggiyaṃ na muṇḍiyaṃ jaṭājallaṃ;",
"snp2.2:13.3": "Kharājināni nāggihuttassupasevanā,",
"snp2.2:13.4": "Ye vāpi loke amarā bahū tapā;",
"snp2.2:13.5": "Mantāhutī yaññamutūpasevanā,",
"snp2.2:13.6": "Sodhenti maccaṃ avitiṇṇakaṅkhaṃ.",
"snp2.2:14.1": "Sotesu gutto viditindriyo care, #12",
"snp2.2:14.2": "Dhamme ṭhito ajjavamaddave rato;",
"snp2.2:14.3": "Saṅgātigo sabbadukkhappahīno,",
"snp2.2:14.4": "Na lippati diṭṭhasutesu dhīro”.",
"snp2.2:15.1": "Iccetamatthaṃ bhagavā punappunaṃ, #13",
"snp2.2:15.2": "Akkhāsi naṃ vedayi mantapāragū;",
"snp2.2:15.3": "Citrāhi gāthāhi munī pakāsayi,",
"snp2.2:15.4": "Nirāmagandho asito durannayo.",
"snp2.2:16.1": "Sutvāna buddhassa subhāsitaṃ padaṃ, #14",
"snp2.2:16.2": "Nirāmagandhaṃ sabbadukkhappanūdanaṃ;",
"snp2.2:16.3": "Nīcamano vandi tathāgatassa,",
"snp2.2:16.4": "Tattheva pabbajjamarocayitthāti.",
"snp2.2:17.1": "Āmagandhasuttaṃ dutiyaṃ."
}