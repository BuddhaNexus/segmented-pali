{
"snp5.4:1.1": "Sutta Nipāta 5.4",
"snp5.4:2.1": "Puṇṇakamāṇavapucchā",
"snp5.4:3.1": "“Anejaṃ mūladassāviṃ,",
"snp5.4:3.2": "iccāyasmā puṇṇako",
"snp5.4:3.3": "Atthi pañhena āgamaṃ;",
"snp5.4:3.4": "Kiṃ nissitā isayo manujā,",
"snp5.4:3.5": "Khattiyā brāhmaṇā devatānaṃ;",
"snp5.4:3.6": "Yaññamakappayiṃsu puthūdha loke,",
"snp5.4:3.7": "Pucchāmi taṃ bhagavā brūhi me taṃ”.",
"snp5.4:4.1": "“Ye kecime isayo manujā, #2",
"snp5.4:4.2": "puṇṇakāti bhagavā",
"snp5.4:4.3": "Khattiyā brāhmaṇā devatānaṃ;",
"snp5.4:4.4": "Yaññamakappayiṃsu puthūdha loke,",
"snp5.4:4.5": "Āsīsamānā puṇṇaka itthattaṃ;",
"snp5.4:4.6": "Jaraṃ sitā yaññamakappayiṃsu”.",
"snp5.4:5.1": "“Ye kecime isayo manujā, #3",
"snp5.4:5.2": "iccāyasmā puṇṇako",
"snp5.4:5.3": "Khattiyā brāhmaṇā devatānaṃ;",
"snp5.4:5.4": "Yaññamakappayiṃsu puthūdha loke,",
"snp5.4:5.5": "Kaccissu te bhagavā yaññapathe appamattā;",
"snp5.4:5.6": "Atāruṃ jātiñca jarañca mārisa,",
"snp5.4:5.7": "Pucchāmi taṃ bhagavā brūhi me taṃ”.",
"snp5.4:6.1": "“Āsīsanti thomayanti abhijappanti juhanti, #4",
"snp5.4:6.2": "puṇṇakāti bhagavā",
"snp5.4:6.3": "Kāmābhijappanti paṭicca lābhaṃ;",
"snp5.4:6.4": "Te yājayogā bhavarāgarattā,",
"snp5.4:6.5": "Nātariṃsu jātijaranti brūmi”.",
"snp5.4:7.1": "“Te ce nātariṃsu yājayogā, #5",
"snp5.4:7.2": "iccāyasmā puṇṇako",
"snp5.4:7.3": "Yaññehi jātiñca jarañca mārisa;",
"snp5.4:7.4": "Atha ko carahi devamanussaloke,",
"snp5.4:7.5": "Atāri jātiñca jarañca mārisa;",
"snp5.4:7.6": "Pucchāmi taṃ bhagavā brūhi me taṃ”.",
"snp5.4:8.1": "“Saṅkhāya lokasmi paroparāni, #6",
"snp5.4:8.2": "puṇṇakāti bhagavā",
"snp5.4:8.3": "Yassiñjitaṃ natthi kuhiñci loke;",
"snp5.4:8.4": "Santo vidhūmo anīgho nirāso,",
"snp5.4:8.5": "Atāri so jātijaranti brūmī”ti.",
"snp5.4:9.1": "Puṇṇakamāṇavapucchā tatiyā."
}