{
"snp2.3:1.1": "Sutta Nipāta 2.3",
"snp2.3:2.1": "Hirisutta",
"snp2.3:3.1": "Hiriṃ tarantaṃ vijigucchamānaṃ,",
"snp2.3:3.2": "Tavāhamasmi iti bhāsamānaṃ;",
"snp2.3:3.3": "Sayhāni kammāni anādiyantaṃ,",
"snp2.3:3.4": "Neso mamanti iti naṃ vijaññā.",
"snp2.3:4.1": "Ananvayaṃ piyaṃ vācaṃ, #2",
"snp2.3:4.2": "yo mittesu pakubbati;",
"snp2.3:4.3": "Akarontaṃ bhāsamānaṃ,",
"snp2.3:4.4": "parijānanti paṇḍitā.",
"snp2.3:5.1": "Na so mitto yo sadā appamatto, #3",
"snp2.3:5.2": "Bhedāsaṅkī randhamevānupassī;",
"snp2.3:5.3": "Yasmiñca seti urasīva putto,",
"snp2.3:5.4": "Sa ve mitto yo parehi abhejjo.",
"snp2.3:6.1": "Pāmujjakaraṇaṃ ṭhānaṃ, #4",
"snp2.3:6.2": "pasaṃsāvahanaṃ sukhaṃ;",
"snp2.3:6.3": "Phalānisaṃso bhāveti,",
"snp2.3:6.4": "vahanto porisaṃ dhuraṃ.",
"snp2.3:7.1": "Pavivekarasaṃ pitvā, #5",
"snp2.3:7.2": "Rasaṃ upasamassa ca;",
"snp2.3:7.3": "Niddaro hoti nippāpo,",
"snp2.3:7.4": "Dhammapītirasaṃ pivanti.",
"snp2.3:8.1": "Hirisuttaṃ tatiyaṃ."
}