{
"snp3.8:1.1": "Sutta Nipāta 3.8",
"snp3.8:2.1": "Sallasutta",
"snp3.8:3.1": "Animittamanaññātaṃ,",
"snp3.8:3.2": "maccānaṃ idha jīvitaṃ;",
"snp3.8:3.3": "Kasirañca parittañca,",
"snp3.8:3.4": "tañca dukkhena saṃyutaṃ.",
"snp3.8:4.1": "Na hi so upakkamo atthi, #2",
"snp3.8:4.2": "yena jātā na miyyare;",
"snp3.8:4.3": "Jarampi patvā maraṇaṃ,",
"snp3.8:4.4": "evaṃdhammā hi pāṇino.",
"snp3.8:5.1": "Phalānamiva pakkānaṃ, #3",
"snp3.8:5.2": "pāto patanato bhayaṃ;",
"snp3.8:5.3": "Evaṃ jātāna maccānaṃ,",
"snp3.8:5.4": "niccaṃ maraṇato bhayaṃ.",
"snp3.8:6.1": "Yathāpi kumbhakārassa, #4",
"snp3.8:6.2": "katā mattikabhājanā;",
"snp3.8:6.3": "Sabbe bhedanapariyantā,",
"snp3.8:6.4": "evaṃ maccāna jīvitaṃ.",
"snp3.8:7.1": "Daharā ca mahantā ca, #5",
"snp3.8:7.2": "ye bālā ye ca paṇḍitā;",
"snp3.8:7.3": "Sabbe maccuvasaṃ yanti,",
"snp3.8:7.4": "sabbe maccuparāyaṇā.",
"snp3.8:8.1": "Tesaṃ maccuparetānaṃ, #6",
"snp3.8:8.2": "gacchataṃ paralokato;",
"snp3.8:8.3": "Na pitā tāyate puttaṃ,",
"snp3.8:8.4": "ñātī vā pana ñātake.",
"snp3.8:9.1": "Pekkhataṃyeva ñātīnaṃ, #7",
"snp3.8:9.2": "passa lālapataṃ puthu;",
"snp3.8:9.3": "Ekamekova maccānaṃ,",
"snp3.8:9.4": "govajjho viya nīyati.",
"snp3.8:10.1": "Evamabbhāhato loko, #8",
"snp3.8:10.2": "Maccunā ca jarāya ca;",
"snp3.8:10.3": "Tasmā dhīrā na socanti,",
"snp3.8:10.4": "Viditvā lokapariyāyaṃ.",
"snp3.8:11.1": "Yassa maggaṃ na jānāsi, #9",
"snp3.8:11.2": "āgatassa gatassa vā;",
"snp3.8:11.3": "Ubho ante asampassaṃ,",
"snp3.8:11.4": "niratthaṃ paridevasi.",
"snp3.8:12.1": "Paridevayamāno ce, #10",
"snp3.8:12.2": "Kiñcidatthaṃ udabbahe;",
"snp3.8:12.3": "Sammūḷho hiṃsamattānaṃ,",
"snp3.8:12.4": "Kayirā ce naṃ vicakkhaṇo.",
"snp3.8:13.1": "Na hi ruṇṇena sokena, #11",
"snp3.8:13.2": "Santiṃ pappoti cetaso;",
"snp3.8:13.3": "Bhiyyassuppajjate dukkhaṃ,",
"snp3.8:13.4": "Sarīraṃ cupahaññati.",
"snp3.8:14.1": "Kiso vivaṇṇo bhavati, #12",
"snp3.8:14.2": "Hiṃsamattānamattanā;",
"snp3.8:14.3": "Na tena petā pālenti,",
"snp3.8:14.4": "Niratthā paridevanā.",
"snp3.8:15.1": "Sokamappajahaṃ jantu, #13",
"snp3.8:15.2": "Bhiyyo dukkhaṃ nigacchati;",
"snp3.8:15.3": "Anutthunanto kālaṅkataṃ,",
"snp3.8:15.4": "Sokassa vasamanvagū.",
"snp3.8:16.1": "Aññepi passa gamine, #14",
"snp3.8:16.2": "Yathākammupage nare;",
"snp3.8:16.3": "Maccuno vasamāgamma,",
"snp3.8:16.4": "Phandantevidha pāṇino.",
"snp3.8:17.1": "Yena yena hi maññanti, #15",
"snp3.8:17.2": "Tato taṃ hoti aññathā;",
"snp3.8:17.3": "Etādiso vinābhāvo,",
"snp3.8:17.4": "Passa lokassa pariyāyaṃ.",
"snp3.8:18.1": "Api vassasataṃ jīve, #16",
"snp3.8:18.2": "Bhiyyo vā pana māṇavo;",
"snp3.8:18.3": "Ñātisaṅghā vinā hoti,",
"snp3.8:18.4": "Jahāti idha jīvitaṃ.",
"snp3.8:19.1": "Tasmā arahato sutvā, #17",
"snp3.8:19.2": "Vineyya paridevitaṃ;",
"snp3.8:19.3": "Petaṃ kālaṅkataṃ disvā,",
"snp3.8:19.4": "Neso labbhā mayā iti.",
"snp3.8:20.1": "Yathā saraṇamādittaṃ, #18",
"snp3.8:20.2": "Vārinā parinibbaye;",
"snp3.8:20.3": "Evampi dhīro sapañño,",
"snp3.8:20.4": "Paṇḍito kusalo naro;",
"snp3.8:20.5": "Khippamuppatitaṃ sokaṃ,",
"snp3.8:20.6": "Vāto tūlaṃva dhaṃsaye.",
"snp3.8:21.1": "Paridevaṃ pajappañca, #19",
"snp3.8:21.2": "Domanassañca attano;",
"snp3.8:21.3": "Attano sukhamesāno,",
"snp3.8:21.4": "Abbahe sallamattano.",
"snp3.8:22.1": "Abbūḷhasallo asito,",
"snp3.8:22.2": "santiṃ pappuyya cetaso;",
"snp3.8:22.3": "Sabbasokaṃ atikkanto,",
"snp3.8:22.4": "asoko hoti nibbutoti.",
"snp3.8:23.1": "Sallasuttaṃ aṭṭhamaṃ."
}