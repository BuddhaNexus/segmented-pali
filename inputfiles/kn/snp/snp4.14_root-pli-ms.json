{
"snp4.14:1.1": "Sutta Nipāta 4.14",
"snp4.14:2.1": "Tuvaṭakasutta",
"snp4.14:3.1": "“Pucchāmi taṃ ādiccabandhu,",
"snp4.14:3.2": "Vivekaṃ santipadañca mahesi;",
"snp4.14:3.3": "Kathaṃ disvā nibbāti bhikkhu,",
"snp4.14:3.4": "Anupādiyāno lokasmiṃ kiñci”.",
"snp4.14:4.1": "“Mūlaṃ papañcasaṅkhāya, #2",
"snp4.14:4.2": "iti bhagavā",
"snp4.14:4.3": "Mantā asmīti sabbamuparundhe;",
"snp4.14:4.4": "Yā kāci taṇhā ajjhattaṃ,",
"snp4.14:4.5": "Tāsaṃ vinayā sadā sato sikkhe.",
"snp4.14:5.1": "Yaṃ kiñci dhammamabhijaññā, #3",
"snp4.14:5.2": "Ajjhattaṃ atha vāpi bahiddhā;",
"snp4.14:5.3": "Na tena thāmaṃ kubbetha,",
"snp4.14:5.4": "Na hi sā nibbuti sataṃ vuttā.",
"snp4.14:6.1": "Seyyo na tena maññeyya, #4",
"snp4.14:6.2": "Nīceyyo atha vāpi sarikkho;",
"snp4.14:6.3": "Phuṭṭho anekarūpehi,",
"snp4.14:6.4": "Nātumānaṃ vikappayaṃ tiṭṭhe.",
"snp4.14:7.1": "Ajjhattamevupasame, #5",
"snp4.14:7.2": "Na aññato bhikkhu santimeseyya;",
"snp4.14:7.3": "Ajjhattaṃ upasantassa,",
"snp4.14:7.4": "Natthi attā kuto nirattā vā.",
"snp4.14:8.1": "Majjhe yathā samuddassa, #6",
"snp4.14:8.2": "Ūmi no jāyatī ṭhito hoti;",
"snp4.14:8.3": "Evaṃ ṭhito anejassa,",
"snp4.14:8.4": "Ussadaṃ bhikkhu na kareyya kuhiñci”.",
"snp4.14:9.1": "“Akittayī vivaṭacakkhu, #7",
"snp4.14:9.2": "Sakkhidhammaṃ parissayavinayaṃ;",
"snp4.14:9.3": "Paṭipadaṃ vadehi bhaddante,",
"snp4.14:9.4": "Pātimokkhaṃ atha vāpi samādhiṃ”.",
"snp4.14:10.1": "“Cakkhūhi neva lolassa, #8",
"snp4.14:10.2": "Gāmakathāya āvaraye sotaṃ;",
"snp4.14:10.3": "Rase ca nānugijjheyya,",
"snp4.14:10.4": "Na ca mamāyetha kiñci lokasmiṃ.",
"snp4.14:11.1": "Phassena yadā phuṭṭhassa, #9",
"snp4.14:11.2": "Paridevaṃ bhikkhu na kareyya kuhiñci;",
"snp4.14:11.3": "Bhavañca nābhijappeyya,",
"snp4.14:11.4": "Bheravesu ca na sampavedheyya.",
"snp4.14:12.1": "Annānamatho pānānaṃ, #10",
"snp4.14:12.2": "Khādanīyānaṃ athopi vatthānaṃ;",
"snp4.14:12.3": "Laddhā na sannidhiṃ kayirā,",
"snp4.14:12.4": "Na ca parittase tāni alabhamāno.",
"snp4.14:13.1": "Jhāyī na pādalolassa, #11",
"snp4.14:13.2": "Virame kukkuccā nappamajjeyya;",
"snp4.14:13.3": "Athāsanesu sayanesu,",
"snp4.14:13.4": "Appasaddesu bhikkhu vihareyya.",
"snp4.14:14.1": "Niddaṃ na bahulīkareyya, #12",
"snp4.14:14.2": "Jāgariyaṃ bhajeyya ātāpī;",
"snp4.14:14.3": "Tandiṃ māyaṃ hassaṃ khiḍḍaṃ,",
"snp4.14:14.4": "Methunaṃ vippajahe savibhūsaṃ.",
"snp4.14:15.1": "Āthabbaṇaṃ supinaṃ lakkhaṇaṃ, #13",
"snp4.14:15.2": "No vidahe athopi nakkhattaṃ;",
"snp4.14:15.3": "Virutañca gabbhakaraṇaṃ,",
"snp4.14:15.4": "Tikicchaṃ māmako na seveyya.",
"snp4.14:16.1": "Nindāya nappavedheyya, #14",
"snp4.14:16.2": "Na uṇṇameyya pasaṃsito bhikkhu;",
"snp4.14:16.3": "Lobhaṃ saha macchariyena,",
"snp4.14:16.4": "Kodhaṃ pesuṇiyañca panudeyya.",
"snp4.14:17.1": "Kayavikkaye na tiṭṭheyya, #15",
"snp4.14:17.2": "Upavādaṃ bhikkhu na kareyya kuhiñci;",
"snp4.14:17.3": "Gāme ca nābhisajjeyya,",
"snp4.14:17.4": "Lābhakamyā janaṃ na lapayeyya.",
"snp4.14:18.1": "Na ca katthitā siyā bhikkhu, #16",
"snp4.14:18.2": "Na ca vācaṃ payuttaṃ bhāseyya;",
"snp4.14:18.3": "Pāgabbhiyaṃ na sikkheyya,",
"snp4.14:18.4": "Kathaṃ viggāhikaṃ na kathayeyya.",
"snp4.14:19.1": "Mosavajje na nīyetha, #17",
"snp4.14:19.2": "Sampajāno saṭhāni na kayirā;",
"snp4.14:19.3": "Atha jīvitena paññāya,",
"snp4.14:19.4": "Sīlabbatena nāññamatimaññe.",
"snp4.14:20.1": "Sutvā rusito bahuṃ vācaṃ, #18",
"snp4.14:20.2": "Samaṇānaṃ vā puthujanānaṃ;",
"snp4.14:20.3": "Pharusena ne na paṭivajjā,",
"snp4.14:20.4": "Na hi santo paṭisenikaronti.",
"snp4.14:21.1": "Etañca dhammamaññāya, #19",
"snp4.14:21.2": "Vicinaṃ bhikkhu sadā sato sikkhe;",
"snp4.14:21.3": "Santīti nibbutiṃ ñatvā,",
"snp4.14:21.4": "Sāsane gotamassa na pamajjeyya.",
"snp4.14:22.1": "Abhibhū hi so anabhibhūto, #20",
"snp4.14:22.2": "Sakkhidhammamanītihamadassī;",
"snp4.14:22.3": "Tasmā hi tassa bhagavato sāsane,",
"snp4.14:22.4": "Appamatto sadā namassamanusikkhe”ti.",
"snp4.14:23.1": "Tuvaṭakasuttaṃ cuddasamaṃ."
}