{
"ne2:1.1": "Netti",
"ne2:2.1": "2. Uddesavāra",
"ne2:3.1": "Tattha katame soḷasa hārā?",
"ne2:3.2": "Desanā vicayo yutti padaṭṭhāno lakkhaṇo catubyūho āvaṭṭo vibhatti parivattano vevacano paññatti otaraṇo sodhano adhiṭṭhāno parikkhāro samāropano iti.",
"ne2:4.1": "Tassānugīti",
"ne2:5.1": "Desanā vicayo yutti,",
"ne2:5.2": "padaṭṭhāno ca lakkhaṇo;",
"ne2:5.3": "Catubyūho ca āvaṭṭo,",
"ne2:5.4": "vibhatti parivattano.",
"ne2:6.1": "Vevacano ca paññatti,",
"ne2:6.2": "otaraṇo ca sodhano;",
"ne2:6.3": "Adhiṭṭhāno parikkhāro,",
"ne2:6.4": "samāropano soḷaso.",
"ne2:7.1": "Ete soḷasa hārā,",
"ne2:7.2": "Pakittitā atthato asaṃkiṇṇā;",
"ne2:7.3": "Etesañceva bhavati,",
"ne2:7.4": "Vitthāratayā nayavibhattīti.",
"ne2:8.1": "Tattha katame pañca nayā?",
"ne2:8.2": "Nandiyāvaṭṭo tipukkhalo sīhavikkīḷito disālocano aṅkuso iti.",
"ne2:9.1": "Tassānugīti",
"ne2:10.1": "Paṭhamo nandiyāvaṭṭo,",
"ne2:10.2": "dutiyo ca tipukkhalo;",
"ne2:10.3": "Sīhavikkīḷito nāma,",
"ne2:10.4": "tatiyo nayalañjako.",
"ne2:11.1": "Disālocanamāhaṃsu,",
"ne2:11.2": "catutthaṃ nayamuttamaṃ;",
"ne2:11.3": "Pañcamo aṅkuso nāma,",
"ne2:11.4": "sabbe pañca nayā gatāti.",
"ne2:12.1": "Tattha katamāni aṭṭhārasa mūlapadāni?",
"ne2:12.2": "Nava padāni kusalāni nava padāni akusalāni.",
"ne2:12.3": "Tattha katamāni nava padāni akusalāni, taṇhā avijjā lobho doso moho subhasaññā sukhasaññā niccasaññā attasaññāti, imāni nava padāni akusalāni, yattha sabbo akusalapakkho saṅgahaṃ samosaraṇaṃ gacchati.",
"ne2:13.1": "Tattha katamāni nava padāni kusalāni?",
"ne2:13.2": "Samatho vipassanā alobho adoso amoho asubhasaññā dukkhasaññā aniccasaññā anattasaññāti, imāni nava padāni kusalāni, yattha sabbo kusalapakkho saṅgahaṃ samosaraṇaṃ gacchati.",
"ne2:14.1": "Tatridaṃ uddānaṃ",
"ne2:15.1": "Taṇhā ca avijjāpi ca,",
"ne2:15.2": "Lobho doso tatheva moho ca;",
"ne2:15.3": "Caturo ca vipallāsā,",
"ne2:15.4": "Kilesabhūmī nava padāni.",
"ne2:16.1": "Samatho ca vipassanā ca,",
"ne2:16.2": "Kusalāni ca yāni tīṇi mūlāni;",
"ne2:16.3": "Caturo satipaṭṭhānā,",
"ne2:16.4": "Indriyabhūmī nava padāni.",
"ne2:17.1": "Navahi ca padehi kusalā,",
"ne2:17.2": "Navahi ca yujjanti akusalapakkhā;",
"ne2:17.3": "Ete kho mūlapadā,",
"ne2:17.4": "Bhavanti aṭṭhārasa padānīti.",
"ne2:18.1": "Uddesavāro."
}