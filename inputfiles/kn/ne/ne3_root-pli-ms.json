{
  "ne3:0.1": "Netti",
  "ne3:0.2": "3. Niddesavāra",
  "ne3:1.1": "Tattha saṅkhepato netti kittitā.",
  "ne3:2.0": "3.1. Hārasaṅkhepa",
  "ne3:2.1": "Assādādīnavatā,",
  "ne3:2.2": "Nissaraṇampi ca phalaṁ upāyo ca;",
  "ne3:2.3": "Āṇattī ca bhagavato,",
  "ne3:2.4": "Yogīnaṁ **desanāhāro**.",
  "ne3:3.1": "Yaṁ pucchitañca vissajjitañca,",
  "ne3:3.2": "Suttassa yā ca anugīti;",
  "ne3:3.3": "Suttassa yo pavicayo,",
  "ne3:3.4": "Hāro **vicayo**ti niddiṭṭho.",
  "ne3:4.1": "Sabbesaṁ hārānaṁ,",
  "ne3:4.2": "Yā bhūmī yo ca gocaro tesaṁ;",
  "ne3:4.3": "Yuttāyuttaparikkhā,",
  "ne3:4.4": "Hāro **yuttī**ti niddiṭṭho.",
  "ne3:5.1": "Dhammaṁ deseti jino,",
  "ne3:5.2": "Tassa ca dhammassa yaṁ padaṭṭhānaṁ;",
  "ne3:5.3": "Iti yāva sabbadhammā,",
  "ne3:5.4": "Eso hāro **padaṭṭhāno**.",
  "ne3:6.1": "Vuttamhi ekadhamme,",
  "ne3:6.2": "Ye dhammā ekalakkhaṇā keci;",
  "ne3:6.3": "Vuttā bhavanti sabbe,",
  "ne3:6.4": "So hāro **lakkhaṇo** nāma.",
  "ne3:7.1": "Neruttamadhippāyo,",
  "ne3:7.2": "Byañjanamatha desanānidānañca;",
  "ne3:7.3": "Pubbāparānusandhī,",
  "ne3:7.4": "Eso hāro **catubyūho**.",
  "ne3:8.1": "Ekamhi padaṭṭhāne,",
  "ne3:8.2": "Pariyesati sesakaṁ padaṭṭhānaṁ;",
  "ne3:8.3": "Āvaṭṭati paṭipakkhe,",
  "ne3:8.4": "**Āvaṭṭo** nāma so hāro.",
  "ne3:9.1": "Dhammañca padaṭṭhānaṁ,",
  "ne3:9.2": "Bhūmiñca vibhajjate ayaṁ hāro;",
  "ne3:9.3": "Sādhāraṇe asādhā-",
  "ne3:9.4": "Raṇe ca neyyo **vibhattī**ti.",
  "ne3:10.1": "Kusalākusale dhamme,",
  "ne3:10.2": "Niddiṭṭhe bhāvite pahīne ca;",
  "ne3:10.3": "Parivattati paṭipakkhe,",
  "ne3:10.4": "Hāro **parivattano** nāma.",
  "ne3:11.1": "Vevacanāni bahūni tu,",
  "ne3:11.2": "Sutte vuttāni ekadhammassa;",
  "ne3:11.3": "Yo jānāti suttavidū,",
  "ne3:11.4": "**Vevacano** nāma so hāro.",
  "ne3:12.1": "Ekaṁ bhagavā dhammaṁ,",
  "ne3:12.2": "Paññattīhi vividhāhi deseti;",
  "ne3:12.3": "So ākāro ñeyyo,",
  "ne3:12.4": "**Paññattī** nāma hāroti.",
  "ne3:13.1": "Yo ca paṭiccuppādo,",
  "ne3:13.2": "Indriyakhandhā ca dhātu āyatanā;",
  "ne3:13.3": "Etehi otarati yo,",
  "ne3:13.4": "**Otaraṇo** nāma so hāro.",
  "ne3:14.1": "Vissajjitamhi pañhe,",
  "ne3:14.2": "Gāthāyaṁ pucchitā yamārabbha;",
  "ne3:14.3": "Suddhāsuddhaparikkhā,",
  "ne3:14.4": "Hāro so **sodhano** nāma.",
  "ne3:15.1": "Ekattatāya dhammā,",
  "ne3:15.2": "Yepi ca vemattatāya niddiṭṭhā;",
  "ne3:15.3": "Te na vikappayitabbā,",
  "ne3:15.4": "Eso hāro **adhiṭṭhāno**.",
  "ne3:16.1": "Ye dhammā yaṁ dhammaṁ,",
  "ne3:16.2": "Janayantippaccayā paramparato;",
  "ne3:16.3": "Hetumavakaḍḍhayitvā,",
  "ne3:16.4": "Eso hāro **parikkhāro**.",
  "ne3:17.1": "Ye dhammā yaṁmūlā,",
  "ne3:17.2": "Ye cekatthā pakāsitā muninā;",
  "ne3:17.3": "Te samaropayitabbā,",
  "ne3:17.4": "Esa **samāropano** hāro.",
  "ne3:18.0": "3.2. Nayasaṅkhepa",
  "ne3:18.1": "Taṇhañca avijjampi ca,",
  "ne3:18.2": "Samathena vipassanāya yo neti;",
  "ne3:18.3": "Saccehi yojayitvā,",
  "ne3:18.4": "Ayaṁ nayo **nandiyāvaṭṭo**.",
  "ne3:19.1": "Yo akusale samūlehi,",
  "ne3:19.2": "Neti kusale ca kusalamūlehi;",
  "ne3:19.3": "Bhūtaṁ tathaṁ avitathaṁ,",
  "ne3:19.4": "**Tipukkhalaṁ** taṁ nayaṁ āhu.",
  "ne3:20.1": "Yo neti vipallāsehi,",
  "ne3:20.2": "Kilese indriyehi saddhamme;",
  "ne3:20.3": "Etaṁ nayaṁ nayavidū,",
  "ne3:20.4": "**Sīhavikkīḷitaṁ** āhu.",
  "ne3:21.1": "Veyyākaraṇesu hi ye,",
  "ne3:21.2": "Kusalākusalā tahiṁ tahiṁ vuttā;",
  "ne3:21.3": "Manasā volokayate,",
  "ne3:21.4": "Taṁ khu **disālocanaṁ** āhu.",
  "ne3:22.1": "Oloketvā disalocanena,",
  "ne3:22.2": "Ukkhipiya yaṁ samāneti;",
  "ne3:22.3": "Sabbe kusalākusale,",
  "ne3:22.4": "Ayaṁ nayo **aṅkuso** nāma.",
  "ne3:23.1": "Soḷasa hārā paṭhamaṁ,",
  "ne3:23.2": "Disalocanato disā viloketvā;",
  "ne3:23.3": "Saṅkhipiya aṅkusena hi,",
  "ne3:23.4": "Nayehi tīhi niddise suttaṁ.",
  "ne3:24.0": "3.3. Dvādasapada",
  "ne3:24.1": "Akkharaṁ padaṁ byañjanaṁ,",
  "ne3:24.2": "nirutti tatheva niddeso;",
  "ne3:24.3": "Ākārachaṭṭhavacanaṁ,",
  "ne3:24.4": "ettāva byañjanaṁ sabbaṁ.",
  "ne3:25.1": "Saṅkāsanā pakāsanā,",
  "ne3:25.2": "Vivaraṇā vibhajanuttānīkammapaññatti;",
  "ne3:25.3": "Etehi chahi padehi,",
  "ne3:25.4": "Attho kammañca niddiṭṭhaṁ.",
  "ne3:26.1": "Tīṇi ca nayā anūnā,",
  "ne3:26.2": "Atthassa ca chappadāni gaṇitāni;",
  "ne3:26.3": "Navahi padehi bhagavato,",
  "ne3:26.4": "Vacanassattho samāyutto.",
  "ne3:27.1": "Atthassa navappadāni,",
  "ne3:27.2": "Byañjanapariyeṭṭhiyā catubbīsa;",
  "ne3:27.3": "Ubhayaṁ saṅkalayitvā,",
  "ne3:27.4": "Tettiṁsā ettikā nettīti.",
  "ne3:27.5": "Niddesavāro."
}