{
  "cnd4:0.1": "Cūḷaniddesa",
  "cnd4:0.2": "Pārāyanavaggagāthā",
  "cnd4:0.3": "4. Pārāyanānugītigāthā",
  "cnd4:1.1": "“Pārāyanamanugāyissaṁ,",
  "cnd4:1.2": "(iccāyasmā piṅgiyo)",
  "cnd4:1.3": "Yathāddakkhi tathākkhāsi;",
  "cnd4:1.4": "Vimalo bhūrimedhaso,",
  "cnd4:1.5": "Nikkāmo nibbano nāgo;",
  "cnd4:1.6": "Kissa hetu musā bhaṇe. (1)",
  "cnd4:2.1": "Pahīnamalamohassa,",
  "cnd4:2.2": "mānamakkhappahāyino;",
  "cnd4:2.3": "Handāhaṁ kittayissāmi,",
  "cnd4:2.4": "giraṁ vaṇṇūpasañhitaṁ. (2)",
  "cnd4:3.1": "Tamonudo buddho samantacakkhu,",
  "cnd4:3.2": "Lokantagū sabbabhavātivatto;",
  "cnd4:3.3": "Anāsavo sabbadukkhappahīno,",
  "cnd4:3.4": "Saccavhayo brahme upāsito me. (3)",
  "cnd4:4.1": "Dijo yathā kubbanakaṁ pahāya,",
  "cnd4:4.2": "Bahupphalaṁ kānanamāvaseyya;",
  "cnd4:4.3": "Evampahaṁ appadasse pahāya,",
  "cnd4:4.4": "Mahodadhiṁ haṁsoriva ajjhapatto. (4)",
  "cnd4:5.1": "Yeme pubbe viyākaṁsu,",
  "cnd4:5.2": "Huraṁ gotamasāsanā;",
  "cnd4:5.3": "Iccāsi iti bhavissati,",
  "cnd4:5.4": "Sabbaṁ taṁ itihītihaṁ;",
  "cnd4:5.5": "Sabbaṁ taṁ takkavaḍḍhanaṁ. (5)",
  "cnd4:6.1": "Eko tamonudāsino,",
  "cnd4:6.2": "jutimā so pabhaṅkaro;",
  "cnd4:6.3": "Gotamo bhūripaññāṇo,",
  "cnd4:6.4": "gotamo bhūrimedhaso. (6)",
  "cnd4:7.1": "Yo me dhammamadesesi,",
  "cnd4:7.2": "Sandiṭṭhikamakālikaṁ;",
  "cnd4:7.3": "Taṇhakkhayamanītikaṁ,",
  "cnd4:7.4": "Yassa natthi upamā kvaci”. (7)",
  "cnd4:8.1": "“Kiṁ nu tamhā vippavasasi,",
  "cnd4:8.2": "muhuttamapi piṅgiya;",
  "cnd4:8.3": "Gotamā bhūripaññāṇā,",
  "cnd4:8.4": "gotamā bhūrimedhasā. (8)",
  "cnd4:9.1": "Yo te dhammamadesesi,",
  "cnd4:9.2": "Sandiṭṭhikamakālikaṁ;",
  "cnd4:9.3": "Taṇhakkhayamanītikaṁ,",
  "cnd4:9.4": "Yassa natthi upamā kvaci”. (9)",
  "cnd4:10.1": "“Nāhaṁ tamhā vippavasāmi,",
  "cnd4:10.2": "Muhuttamapi brāhmaṇa;",
  "cnd4:10.3": "Gotamā bhūripaññāṇā,",
  "cnd4:10.4": "Gotamā bhūrimedhasā. (10)",
  "cnd4:11.1": "Yo me dhammamadesesi,",
  "cnd4:11.2": "Sandiṭṭhikamakālikaṁ;",
  "cnd4:11.3": "Taṇhakkhayamanītikaṁ,",
  "cnd4:11.4": "Yassa natthi upamā kvaci. (11)",
  "cnd4:12.1": "Passāmi naṁ manasā cakkhunāva,",
  "cnd4:12.2": "Rattindivaṁ brāhmaṇa appamatto;",
  "cnd4:12.3": "Namassamāno vivasemi rattiṁ,",
  "cnd4:12.4": "Teneva maññāmi avippavāsaṁ. (12)",
  "cnd4:13.1": "Saddhā ca pīti ca mano sati ca,",
  "cnd4:13.2": "Nāpentime gotamasāsanamhā;",
  "cnd4:13.3": "Yaṁ yaṁ disaṁ vajati bhūripañño,",
  "cnd4:13.4": "Sa tena teneva natohamasmi. (13)",
  "cnd4:14.1": "Jiṇṇassa me dubbalathāmakassa,",
  "cnd4:14.2": "Teneva kāyo na paleti tattha;",
  "cnd4:14.3": "Saṅkappayantāya vajāmi niccaṁ,",
  "cnd4:14.4": "Mano hi me brāhmaṇa tena yutto. (14)",
  "cnd4:15.1": "Paṅke sayāno pariphandamāno,",
  "cnd4:15.2": "Dīpā dīpaṁ upallaviṁ;",
  "cnd4:15.3": "Athaddasāsiṁ sambuddhaṁ,",
  "cnd4:15.4": "Oghatiṇṇamanāsavaṁ”. (15)",
  "cnd4:16.1": "“Yathā ahū vakkali muttasaddho,",
  "cnd4:16.2": "Bhadrāvudho āḷavigotamo ca;",
  "cnd4:16.3": "Evameva tvampi pamuñcassu saddhaṁ,",
  "cnd4:16.4": "Gamissasi tvaṁ piṅgiya maccudheyyassa pāraṁ”. (16)",
  "cnd4:17.1": "“Esa bhiyyo pasīdāmi,",
  "cnd4:17.2": "Sutvāna munino vaco;",
  "cnd4:17.3": "Vivaṭṭacchado sambuddho,",
  "cnd4:17.4": "Akhilo paṭibhānavā. (17)",
  "cnd4:18.1": "Adhideve abhiññāya,",
  "cnd4:18.2": "Sabbaṁ vedi paroparaṁ;",
  "cnd4:18.3": "Pañhānantakaro satthā,",
  "cnd4:18.4": "Kaṅkhīnaṁ paṭijānataṁ. (18)",
  "cnd4:19.1": "Asaṁhīraṁ asaṅkuppaṁ,",
  "cnd4:19.2": "Yassa natthi upamā kvaci;",
  "cnd4:19.3": "Addhā gamissāmi na mettha kaṅkhā,",
  "cnd4:19.4": "Evaṁ maṁ dhārehi adhimuttacittan”ti. (19)",
  "cnd4:19.5": "Pārāyanānugītigāthā niṭṭhitā."
}