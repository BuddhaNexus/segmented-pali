{
"cnd4:1.1": "Cūḷaniddesa",
"cnd4:2.1": "Pārāyanavaggagāthā",
"cnd4:3.1": "4. Pārāyanānugītigāthā",
"cnd4:4.1": "“Pārāyanamanugāyissaṃ,",
"cnd4:4.2": "iccāyasmā piṅgiyo",
"cnd4:4.3": "Yathāddakkhi tathākkhāsi;",
"cnd4:4.4": "Vimalo bhūrimedhaso,",
"cnd4:4.5": "Nikkāmo nibbano nāgo;",
"cnd4:4.6": "Kissa hetu musā bhaṇe. #1",
"cnd4:5.1": "Pahīnamalamohassa,",
"cnd4:5.2": "mānamakkhappahāyino;",
"cnd4:5.3": "Handāhaṃ kittayissāmi,",
"cnd4:5.4": "giraṃ vaṇṇūpasañhitaṃ. #2",
"cnd4:6.1": "Tamonudo buddho samantacakkhu,",
"cnd4:6.2": "Lokantagū sabbabhavātivatto;",
"cnd4:6.3": "Anāsavo sabbadukkhappahīno,",
"cnd4:6.4": "Saccavhayo brahme upāsito me. #3",
"cnd4:7.1": "Dijo yathā kubbanakaṃ pahāya,",
"cnd4:7.2": "Bahupphalaṃ kānanamāvaseyya;",
"cnd4:7.3": "Evampahaṃ appadasse pahāya,",
"cnd4:7.4": "Mahodadhiṃ haṃsoriva ajjhapatto. #4",
"cnd4:8.1": "Yeme pubbe viyākaṃsu,",
"cnd4:8.2": "Huraṃ gotamasāsanā;",
"cnd4:8.3": "Iccāsi iti bhavissati,",
"cnd4:8.4": "Sabbaṃ taṃ itihītihaṃ;",
"cnd4:8.5": "Sabbaṃ taṃ takkavaḍḍhanaṃ. #5",
"cnd4:9.1": "Eko tamonudāsino,",
"cnd4:9.2": "jutimā so pabhaṅkaro;",
"cnd4:9.3": "Gotamo bhūripaññāṇo,",
"cnd4:9.4": "gotamo bhūrimedhaso. #6",
"cnd4:10.1": "Yo me dhammamadesesi,",
"cnd4:10.2": "Sandiṭṭhikamakālikaṃ;",
"cnd4:10.3": "Taṇhakkhayamanītikaṃ,",
"cnd4:10.4": "Yassa natthi upamā kvaci”. #7",
"cnd4:11.1": "“Kiṃ nu tamhā vippavasasi,",
"cnd4:11.2": "muhuttamapi piṅgiya;",
"cnd4:11.3": "Gotamā bhūripaññāṇā,",
"cnd4:11.4": "gotamā bhūrimedhasā. #8",
"cnd4:12.1": "Yo te dhammamadesesi,",
"cnd4:12.2": "Sandiṭṭhikamakālikaṃ;",
"cnd4:12.3": "Taṇhakkhayamanītikaṃ,",
"cnd4:12.4": "Yassa natthi upamā kvaci”. #9",
"cnd4:13.1": "“Nāhaṃ tamhā vippavasāmi,",
"cnd4:13.2": "Muhuttamapi brāhmaṇa;",
"cnd4:13.3": "Gotamā bhūripaññāṇā,",
"cnd4:13.4": "Gotamā bhūrimedhasā. #10",
"cnd4:14.1": "Yo me dhammamadesesi,",
"cnd4:14.2": "Sandiṭṭhikamakālikaṃ;",
"cnd4:14.3": "Taṇhakkhayamanītikaṃ,",
"cnd4:14.4": "Yassa natthi upamā kvaci. #11",
"cnd4:15.1": "Passāmi naṃ manasā cakkhunāva,",
"cnd4:15.2": "Rattindivaṃ brāhmaṇa appamatto;",
"cnd4:15.3": "Namassamāno vivasemi rattiṃ,",
"cnd4:15.4": "Teneva maññāmi avippavāsaṃ. #12",
"cnd4:16.1": "Saddhā ca pīti ca mano sati ca,",
"cnd4:16.2": "Nāpentime gotamasāsanamhā;",
"cnd4:16.3": "Yaṃ yaṃ disaṃ vajati bhūripañño,",
"cnd4:16.4": "Sa tena teneva natohamasmi. #13",
"cnd4:17.1": "Jiṇṇassa me dubbalathāmakassa,",
"cnd4:17.2": "Teneva kāyo na paleti tattha;",
"cnd4:17.3": "Saṅkappayantāya vajāmi niccaṃ,",
"cnd4:17.4": "Mano hi me brāhmaṇa tena yutto. #14",
"cnd4:18.1": "Paṅke sayāno pariphandamāno,",
"cnd4:18.2": "Dīpā dīpaṃ upallaviṃ;",
"cnd4:18.3": "Athaddasāsiṃ sambuddhaṃ,",
"cnd4:18.4": "Oghatiṇṇamanāsavaṃ”. #15",
"cnd4:19.1": "“Yathā ahū vakkali muttasaddho,",
"cnd4:19.2": "Bhadrāvudho āḷavigotamo ca;",
"cnd4:19.3": "Evameva tvampi pamuñcassu saddhaṃ,",
"cnd4:19.4": "Gamissasi tvaṃ piṅgiya maccudheyyassa pāraṃ”. #16",
"cnd4:20.1": "“Esa bhiyyo pasīdāmi,",
"cnd4:20.2": "Sutvāna munino vaco;",
"cnd4:20.3": "Vivaṭṭacchado sambuddho,",
"cnd4:20.4": "Akhilo paṭibhānavā. #17",
"cnd4:21.1": "Adhideve abhiññāya,",
"cnd4:21.2": "Sabbaṃ vedi paroparaṃ;",
"cnd4:21.3": "Pañhānantakaro satthā,",
"cnd4:21.4": "Kaṅkhīnaṃ paṭijānataṃ. #18",
"cnd4:22.1": "Asaṃhīraṃ asaṃkuppaṃ,",
"cnd4:22.2": "Yassa natthi upamā kvaci;",
"cnd4:22.3": "Addhā gamissāmi na mettha kaṅkhā,",
"cnd4:22.4": "Evaṃ maṃ dhārehi adhimuttacittan”ti. #19",
"cnd4:23.1": "Pārāyanānugītigāthā niṭṭhitā."
}