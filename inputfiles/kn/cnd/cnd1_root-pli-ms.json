{
"cnd1:1.1": "Cūḷaniddesa",
"cnd1:2.1": "Pārāyanavaggagāthā",
"cnd1:3.1": "1. Vatthugāthā",
"cnd1:4.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
"cnd1:5.1": "Kosalānaṃ purā rammā,",
"cnd1:5.2": "agamā dakkhiṇāpathaṃ;",
"cnd1:5.3": "Ākiñcaññaṃ patthayāno,",
"cnd1:5.4": "brāhmaṇo mantapāragū.",
"cnd1:6.1": "So assakassa visaye,",
"cnd1:6.2": "maḷakassa samāsane;",
"cnd1:6.3": "Vasi godhāvarīkūle,",
"cnd1:6.4": "uñchena ca phalena ca.",
"cnd1:7.1": "Tasseva upanissāya,",
"cnd1:7.2": "gāmo ca vipulo ahu;",
"cnd1:7.3": "Tato jātena āyena,",
"cnd1:7.4": "mahāyaññamakappayi.",
"cnd1:8.1": "Mahāyaññaṃ yajitvāna,",
"cnd1:8.2": "puna pāvisi assamaṃ;",
"cnd1:8.3": "Tasmiṃ paṭipaviṭṭhamhi,",
"cnd1:8.4": "añño āgañchi brāhmaṇo.",
"cnd1:9.1": "Ugghaṭṭapādo tasito,",
"cnd1:9.2": "paṅkadanto rajassiro;",
"cnd1:9.3": "So ca naṃ upasaṅkamma,",
"cnd1:9.4": "satāni pañca yācati.",
"cnd1:10.1": "Tamenaṃ bāvarī disvā,",
"cnd1:10.2": "āsanena nimantayi;",
"cnd1:10.3": "Sukhañca kusalaṃ pucchi,",
"cnd1:10.4": "idaṃ vacanamabravi.",
"cnd1:11.1": "“Yaṃ kho mama deyyadhammaṃ,",
"cnd1:11.2": "Sabbaṃ visajjitaṃ mayā;",
"cnd1:11.3": "Anujānāhi me brahme,",
"cnd1:11.4": "Natthi pañcasatāni me”.",
"cnd1:12.1": "“Sace me yācamānassa,",
"cnd1:12.2": "bhavaṃ nānupadassati;",
"cnd1:12.3": "Sattame divase tuyhaṃ,",
"cnd1:12.4": "muddhā phalatu sattadhā”.",
"cnd1:13.1": "Abhisaṅkharitvā kuhako,",
"cnd1:13.2": "bheravaṃ so akittayi;",
"cnd1:13.3": "Tassa taṃ vacanaṃ sutvā,",
"cnd1:13.4": "bāvarī dukkhito ahu.",
"cnd1:14.1": "Ussussati anāhāro,",
"cnd1:14.2": "sokasallasamappito;",
"cnd1:14.3": "Athopi evaṃ cittassa,",
"cnd1:14.4": "jhāne na ramatī mano.",
"cnd1:15.1": "Utrastaṃ dukkhitaṃ disvā,",
"cnd1:15.2": "devatā atthakāminī;",
"cnd1:15.3": "Bāvariṃ upasaṅkamma,",
"cnd1:15.4": "idaṃ vacanamabravi.",
"cnd1:16.1": "“Na so muddhaṃ pajānāti,",
"cnd1:16.2": "kuhako so dhanatthiko;",
"cnd1:16.3": "Muddhani muddhapāte vā,",
"cnd1:16.4": "ñāṇaṃ tassa na vijjati”.",
"cnd1:17.1": "“Bhotī carahi jānāti,",
"cnd1:17.2": "Taṃ me akkhāhi pucchitā;",
"cnd1:17.3": "Muddhaṃ muddhādhipātañca,",
"cnd1:17.4": "Taṃ suṇoma vaco tava”.",
"cnd1:18.1": "“Ahampetaṃ na jānāmi,",
"cnd1:18.2": "ñāṇaṃ mettha na vijjati;",
"cnd1:18.3": "Muddhani muddhādhipāte ca,",
"cnd1:18.4": "jinānaṃ hettha dassanaṃ”.",
"cnd1:19.1": "“Atha ko carahi jānāti,",
"cnd1:19.2": "asmiṃ pathavimaṇḍale;",
"cnd1:19.3": "Muddhaṃ muddhādhipātañca,",
"cnd1:19.4": "taṃ me akkhāhi devate”.",
"cnd1:20.1": "“Purā kapilavatthumhā,",
"cnd1:20.2": "nikkhanto lokanāyako;",
"cnd1:20.3": "Apacco okkākarājassa,",
"cnd1:20.4": "sakyaputto pabhaṅkaro.",
"cnd1:21.1": "So hi brāhmaṇa sambuddho,",
"cnd1:21.2": "sabbadhammāna pāragū;",
"cnd1:21.3": "Sabbābhiññābalappatto,",
"cnd1:21.4": "sabbadhammesu cakkhumā;",
"cnd1:21.5": "Sabbakammakkhayaṃ patto,",
"cnd1:21.6": "vimutto upadhikkhaye.",
"cnd1:22.1": "Buddho so bhagavā loke,",
"cnd1:22.2": "dhammaṃ deseti cakkhumā;",
"cnd1:22.3": "Taṃ tvaṃ gantvāna pucchassu,",
"cnd1:22.4": "so te taṃ byākarissati”.",
"cnd1:23.1": "Sambuddhoti vaco sutvā,",
"cnd1:23.2": "udaggo bāvarī ahu;",
"cnd1:23.3": "Sokassa tanuko āsi,",
"cnd1:23.4": "pītiñca vipulaṃ labhi.",
"cnd1:24.1": "So bāvarī attamano udaggo,",
"cnd1:24.2": "Taṃ devataṃ pucchati vedajāto;",
"cnd1:24.3": "“Katamamhi gāme nigamamhi vā pana,",
"cnd1:24.4": "Katamamhi vā janapade lokanātho;",
"cnd1:24.5": "Yattha gantvāna passemu,",
"cnd1:24.6": "Sambuddhaṃ dvipaduttamaṃ”.",
"cnd1:25.1": "“Sāvatthiyaṃ kosalamandire jino,",
"cnd1:25.2": "Pahūtapañño varabhūrimedhaso;",
"cnd1:25.3": "So sakyaputto vidhuro anāsavo,",
"cnd1:25.4": "Muddhādhipātassa vidū narāsabho”.",
"cnd1:26.1": "Tato āmantayī sisse,",
"cnd1:26.2": "brāhmaṇe mantapāragū;",
"cnd1:26.3": "“Etha māṇavā akkhissaṃ,",
"cnd1:26.4": "suṇātha vacanaṃ mama.",
"cnd1:27.1": "Yasseso dullabho loke,",
"cnd1:27.2": "pātubhāvo abhiṇhaso;",
"cnd1:27.3": "Svājja lokamhi uppanno,",
"cnd1:27.4": "sambuddho iti vissuto;",
"cnd1:27.5": "Khippaṃ gantvāna sāvatthiṃ,",
"cnd1:27.6": "passavho dvipaduttamaṃ”.",
"cnd1:28.1": "“Kathaṃ carahi jānemu,",
"cnd1:28.2": "disvā buddhoti brāhmaṇa;",
"cnd1:28.3": "Ajānataṃ no pabrūhi,",
"cnd1:28.4": "yathā jānemu taṃ mayaṃ”.",
"cnd1:29.1": "“Āgatāni hi mantesu,",
"cnd1:29.2": "mahāpurisalakkhaṇā;",
"cnd1:29.3": "Dvattiṃsāni ca byākkhātā,",
"cnd1:29.4": "samattā anupubbaso.",
"cnd1:30.1": "Yassete honti gattesu,",
"cnd1:30.2": "mahāpurisalakkhaṇā;",
"cnd1:30.3": "Dveyeva tassa gatiyo,",
"cnd1:30.4": "tatiyā hi na vijjati.",
"cnd1:31.1": "Sace agāraṃ āvasati,",
"cnd1:31.2": "vijeyya pathaviṃ imaṃ;",
"cnd1:31.3": "Adaṇḍena asatthena,",
"cnd1:31.4": "dhammena anusāsati.",
"cnd1:32.1": "Sace ca so pabbajati,",
"cnd1:32.2": "Agārā anagāriyaṃ;",
"cnd1:32.3": "Vivaṭṭacchado sambuddho,",
"cnd1:32.4": "Arahā bhavati anuttaro.",
"cnd1:33.1": "Jātiṃ gottañca lakkhaṇaṃ,",
"cnd1:33.2": "mante sisse punāpare;",
"cnd1:33.3": "Muddhaṃ muddhādhipātañca,",
"cnd1:33.4": "manasāyeva pucchatha.",
"cnd1:34.1": "Anāvaraṇadassāvī,",
"cnd1:34.2": "yadi buddho bhavissati;",
"cnd1:34.3": "Manasā pucchite pañhe,",
"cnd1:34.4": "vācāya visajjessati”.",
"cnd1:35.1": "Bāvarissa vaco sutvā,",
"cnd1:35.2": "sissā soḷasa brāhmaṇā;",
"cnd1:35.3": "Ajito tissametteyyo,",
"cnd1:35.4": "puṇṇako atha mettagū.",
"cnd1:36.1": "Dhotako upasīvo ca,",
"cnd1:36.2": "nando ca atha hemako;",
"cnd1:36.3": "Todeyyakappā dubhayo,",
"cnd1:36.4": "jatukaṇṇī ca paṇḍito.",
"cnd1:37.1": "Bhadrāvudho udayo ca,",
"cnd1:37.2": "posālo cāpi brāhmaṇo;",
"cnd1:37.3": "Mogharājā ca medhāvī,",
"cnd1:37.4": "piṅgiyo ca mahāisi.",
"cnd1:38.1": "Paccekagaṇino sabbe,",
"cnd1:38.2": "sabbalokassa vissutā;",
"cnd1:38.3": "Jhāyī jhānaratā dhīrā,",
"cnd1:38.4": "pubbavāsanavāsitā.",
"cnd1:39.1": "Bāvariṃ abhivādetvā,",
"cnd1:39.2": "katvā ca naṃ padakkhiṇaṃ;",
"cnd1:39.3": "Jaṭājinadharā sabbe,",
"cnd1:39.4": "pakkāmuṃ uttarāmukhā.",
"cnd1:40.1": "Maḷakassa patiṭṭhānaṃ,",
"cnd1:40.2": "puramāhissatiṃ tadā;",
"cnd1:40.3": "Ujjeniñcāpi gonaddhaṃ,",
"cnd1:40.4": "vedisaṃ vanasavhayaṃ.",
"cnd1:41.1": "Kosambiñcāpi sāketaṃ,",
"cnd1:41.2": "sāvatthiñca puruttamaṃ;",
"cnd1:41.3": "Setabyaṃ kapilavatthuṃ,",
"cnd1:41.4": "kusinārañca mandiraṃ.",
"cnd1:42.1": "Pāvañca bhoganagaraṃ,",
"cnd1:42.2": "vesāliṃ māgadhaṃ puraṃ;",
"cnd1:42.3": "Pāsāṇakaṃ cetiyañca,",
"cnd1:42.4": "ramaṇīyaṃ manoramaṃ.",
"cnd1:43.1": "Tasitovudakaṃ sītaṃ,",
"cnd1:43.2": "mahālābhaṃva vāṇijo;",
"cnd1:43.3": "Chāyaṃ ghammābhitattova,",
"cnd1:43.4": "turitā pabbatamāruhuṃ.",
"cnd1:44.1": "Bhagavā tamhi samaye,",
"cnd1:44.2": "bhikkhusaṃghapurakkhato;",
"cnd1:44.3": "Bhikkhūnaṃ dhammaṃ deseti,",
"cnd1:44.4": "sīhova nadatī vane.",
"cnd1:45.1": "Ajito addasa buddhaṃ,",
"cnd1:45.2": "Pītaraṃsiṃva bhāṇumaṃ;",
"cnd1:45.3": "Candaṃ yathā pannarase,",
"cnd1:45.4": "Paripūraṃ upāgataṃ.",
"cnd1:46.1": "Athassa gatte disvāna,",
"cnd1:46.2": "paripūrañca byañjanaṃ;",
"cnd1:46.3": "Ekamantaṃ ṭhito haṭṭho,",
"cnd1:46.4": "manopañhe apucchatha.",
"cnd1:47.1": "“Ādissa jammanaṃ brūhi,",
"cnd1:47.2": "gottaṃ brūhi salakkhaṇaṃ;",
"cnd1:47.3": "Mantesu pāramiṃ brūhi,",
"cnd1:47.4": "kati vāceti brāhmaṇo”.",
"cnd1:48.1": "“Vīsaṃ vassasataṃ āyu,",
"cnd1:48.2": "so ca gottena bāvarī;",
"cnd1:48.3": "Tīṇissa lakkhaṇā gatte,",
"cnd1:48.4": "tiṇṇaṃ vedāna pāragū.",
"cnd1:49.1": "Lakkhaṇe itihāse ca,",
"cnd1:49.2": "sanighaṇḍusakeṭubhe;",
"cnd1:49.3": "Pañcasatāni vāceti,",
"cnd1:49.4": "sadhamme pāramiṃ gato”.",
"cnd1:50.1": "“Lakkhaṇānaṃ pavicayaṃ,",
"cnd1:50.2": "bāvarissa naruttama;",
"cnd1:50.3": "Taṇhacchida pakāsehi,",
"cnd1:50.4": "mā no kaṅkhāyitaṃ ahu”.",
"cnd1:51.1": "“Mukhaṃ jivhāya chādeti,",
"cnd1:51.2": "uṇṇassa bhamukantare;",
"cnd1:51.3": "Kosohitaṃ vatthaguyhaṃ,",
"cnd1:51.4": "evaṃ jānāhi māṇava”.",
"cnd1:52.1": "Pucchañhi kiñci asuṇanto,",
"cnd1:52.2": "sutvā pañhe viyākate;",
"cnd1:52.3": "Vicinteti jano sabbo,",
"cnd1:52.4": "vedajāto katañjalī.",
"cnd1:53.1": "“Ko nu devo vā brahmā vā,",
"cnd1:53.2": "indo vāpi sujampati;",
"cnd1:53.3": "Manasā pucchite pañhe,",
"cnd1:53.4": "kametaṃ paṭibhāsati”.",
"cnd1:54.1": "“Muddhaṃ muddhādhipātañca,",
"cnd1:54.2": "bāvarī paripucchati;",
"cnd1:54.3": "Taṃ byākarohi bhagavā,",
"cnd1:54.4": "kaṅkhaṃ vinaya no ise”.",
"cnd1:55.1": "“Avijjā muddhāti jānāhi,",
"cnd1:55.2": "vijjā muddhādhipātinī;",
"cnd1:55.3": "Saddhāsatisamādhīhi,",
"cnd1:55.4": "chandavīriyena saṃyutā”.",
"cnd1:56.1": "Tato vedena mahatā,",
"cnd1:56.2": "santhambhetvāna māṇavo;",
"cnd1:56.3": "Ekaṃsaṃ ajinaṃ katvā,",
"cnd1:56.4": "pādesu sirasā pati.",
"cnd1:57.1": "“Bāvarī brāhmaṇo bhoto,",
"cnd1:57.2": "saha sissehi mārisa;",
"cnd1:57.3": "Udaggacitto sumano,",
"cnd1:57.4": "pāde vandati cakkhuma”.",
"cnd1:58.1": "“Sukhito bāvarī hotu,",
"cnd1:58.2": "saha sissehi brāhmaṇo;",
"cnd1:58.3": "Tvañcāpi sukhito hohi,",
"cnd1:58.4": "ciraṃ jīvāhi māṇava.",
"cnd1:59.1": "Bāvarissa ca tuyhaṃ vā,",
"cnd1:59.2": "sabbesaṃ sabbasaṃsayaṃ;",
"cnd1:59.3": "Katāvakāsā pucchavho,",
"cnd1:59.4": "yaṃ kiñci manasicchatha”.",
"cnd1:60.1": "Sambuddhena katokāso,",
"cnd1:60.2": "nisīditvāna pañjalī;",
"cnd1:60.3": "Ajito paṭhamaṃ pañhaṃ,",
"cnd1:60.4": "tattha pucchi tathāgataṃ.",
"cnd1:61.1": "Vatthugāthā niṭṭhitā."
}