{
"thi-ap37:1.1": "Therīapadāna",
"thi-ap37:2.1": "Khattiyāvagga",
"thi-ap37:3.1": "7 Aḍḍhakāsitherīapadāna",
"thi-ap37:4.1": "“Imamhi bhaddake kappe,",
"thi-ap37:4.2": "brahmabandhu mahāyaso;",
"thi-ap37:4.3": "Kassapo nāma gottena,",
"thi-ap37:4.4": "uppajji vadataṃ varo.",
"thi-ap37:5.1": "Tadāhaṃ pabbajitvāna,",
"thi-ap37:5.2": "tassa buddhassa sāsane;",
"thi-ap37:5.3": "Saṃvutā pātimokkhamhi,",
"thi-ap37:5.4": "indriyesu ca pañcasu.",
"thi-ap37:6.1": "Mattaññunī ca asane,",
"thi-ap37:6.2": "yuttā jāgariyepi ca;",
"thi-ap37:6.3": "Vasantī yuttayogāhaṃ,",
"thi-ap37:6.4": "bhikkhuniṃ vigatāsavaṃ.",
"thi-ap37:7.1": "Akkosiṃ duṭṭhacittāhaṃ,",
"thi-ap37:7.2": "gaṇiketi bhaṇiṃ tadā;",
"thi-ap37:7.3": "Tena pāpena kammena,",
"thi-ap37:7.4": "nirayamhi apaccisaṃ.",
"thi-ap37:8.1": "Tena kammāvasesena,",
"thi-ap37:8.2": "ajāyiṃ gaṇikākule;",
"thi-ap37:8.3": "Bahusova parādhīnā,",
"thi-ap37:8.4": "pacchimāya ca jātiyaṃ.",
"thi-ap37:9.1": "Kāsīsu seṭṭhikulajā,",
"thi-ap37:9.2": "brahmacārībalenahaṃ;",
"thi-ap37:9.3": "Accharā viya devesu,",
"thi-ap37:9.4": "ahosiṃ rūpasampadā.",
"thi-ap37:10.1": "Disvāna dassanīyaṃ maṃ,",
"thi-ap37:10.2": "giribbajapuruttame;",
"thi-ap37:10.3": "Gaṇikatte nivesesuṃ,",
"thi-ap37:10.4": "akkosanabalena me.",
"thi-ap37:11.1": "Sāhaṃ sutvāna saddhammaṃ,",
"thi-ap37:11.2": "buddhaseṭṭhena desitaṃ;",
"thi-ap37:11.3": "Pubbavāsanasampannā,",
"thi-ap37:11.4": "pabbajiṃ anagāriyaṃ.",
"thi-ap37:12.1": "Tadūpasampadatthāya,",
"thi-ap37:12.2": "gacchantī jinasantikaṃ;",
"thi-ap37:12.3": "Magge dhutte ṭhite sutvā,",
"thi-ap37:12.4": "labhiṃ dūtopasampadaṃ.",
"thi-ap37:13.1": "Sabbakammaṃ parikkhīṇaṃ,",
"thi-ap37:13.2": "puññaṃ pāpaṃ tatheva ca;",
"thi-ap37:13.3": "Sabbasaṃsāramuttiṇṇā,",
"thi-ap37:13.4": "gaṇikattañca khepitaṃ.",
"thi-ap37:14.1": "Iddhīsu ca vasī homi,",
"thi-ap37:14.2": "dibbāya sotadhātuyā;",
"thi-ap37:14.3": "Cetopariyañāṇassa,",
"thi-ap37:14.4": "vasī homi mahāmune.",
"thi-ap37:15.1": "Pubbenivāsaṃ jānāmi,",
"thi-ap37:15.2": "dibbacakkhu visodhitaṃ;",
"thi-ap37:15.3": "Sabbāsavā parikkhīṇā,",
"thi-ap37:15.4": "natthi dāni punabbhavo.",
"thi-ap37:16.1": "Atthadhammaniruttīsu,",
"thi-ap37:16.2": "paṭibhāne tatheva ca;",
"thi-ap37:16.3": "Ñāṇaṃ mama mahāvīra,",
"thi-ap37:16.4": "uppannaṃ tava santike.",
"thi-ap37:17.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap37:17.4": "viharāmi anāsavā.",
"thi-ap37:18.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap37:18.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap37:19.1": "Paṭisambhidā catasso, … pe …",
"thi-ap37:19.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap37:20.1": "Itthaṃ sudaṃ aḍḍhakāsi bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap37:21.1": "Aḍḍhakāsitheriyāpadānaṃ sattamaṃ."
}