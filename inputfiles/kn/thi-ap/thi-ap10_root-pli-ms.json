{
"thi-ap10:1.1": "Therīapadāna",
"thi-ap10:2.1": "Sumedhāvagga",
"thi-ap10:3.1": "10. Udakadāyikātherīapadāna",
"thi-ap10:4.1": "“Nagare bandhumatiyā,",
"thi-ap10:4.2": "ahosiṃ udahārikā;",
"thi-ap10:4.3": "Udahārena jīvāmi,",
"thi-ap10:4.4": "tena posemi dārake.",
"thi-ap10:5.1": "Deyyadhammo ca me natthi,",
"thi-ap10:5.2": "puññakkhette anuttare;",
"thi-ap10:5.3": "Koṭṭhakaṃ upasaṅkamma,",
"thi-ap10:5.4": "udakaṃ paṭṭhapesahaṃ.",
"thi-ap10:6.1": "Tena kammena sukatena,",
"thi-ap10:6.2": "tāvatiṃsamagacchahaṃ;",
"thi-ap10:6.3": "Tattha me sukataṃ byamhaṃ,",
"thi-ap10:6.4": "udahārena nimmitaṃ.",
"thi-ap10:7.1": "Accharānaṃ sahassassa,",
"thi-ap10:7.2": "ahañhi pavarā tadā;",
"thi-ap10:7.3": "Dasaṭṭhānehi tā sabbā,",
"thi-ap10:7.4": "abhibhomi sadā ahaṃ.",
"thi-ap10:8.1": "Paññāsaṃ devarājūnaṃ,",
"thi-ap10:8.2": "mahesittamakārayiṃ;",
"thi-ap10:8.3": "Vīsaticakkavattīnaṃ,",
"thi-ap10:8.4": "mahesittamakārayiṃ.",
"thi-ap10:9.1": "Duve bhave saṃsarāmi,",
"thi-ap10:9.2": "devatte atha mānuse;",
"thi-ap10:9.3": "Duggatiṃ nābhijānāmi,",
"thi-ap10:9.4": "dakadānassidaṃ phalaṃ.",
"thi-ap10:10.1": "Pabbatagge dumagge vā,",
"thi-ap10:10.2": "antalikkhe ca bhūmiyaṃ;",
"thi-ap10:10.3": "Yadā udakamicchāmi,",
"thi-ap10:10.4": "khippaṃ paṭilabhāmahaṃ.",
"thi-ap10:11.1": "Avuṭṭhikā disā natthi,",
"thi-ap10:11.2": "santattā kuthitāpi ca;",
"thi-ap10:11.3": "Mama saṅkappamaññāya,",
"thi-ap10:11.4": "mahāmegho pavassati.",
"thi-ap10:12.1": "Kadāci nīyamānāya,",
"thi-ap10:12.2": "ñātisaṅghena me tadā;",
"thi-ap10:12.3": "Yadā icchāmahaṃ vassaṃ,",
"thi-ap10:12.4": "mahāmegho ajāyatha.",
"thi-ap10:13.1": "Uṇhaṃ vā pariḷāho vā,",
"thi-ap10:13.2": "sarīre me na vijjati;",
"thi-ap10:13.3": "Kāye ca me rajo natthi,",
"thi-ap10:13.4": "dakadānassidaṃ phalaṃ.",
"thi-ap10:14.1": "Visuddhamanasā ajja,",
"thi-ap10:14.2": "apetamanapāpikā;",
"thi-ap10:14.3": "Sabbāsavaparikkhīṇā,",
"thi-ap10:14.4": "natthi dāni punabbhavo.",
"thi-ap10:15.1": "Ekanavutito kappe,",
"thi-ap10:15.2": "yaṃ dakaṃ adadiṃ tadā;",
"thi-ap10:15.3": "Duggatiṃ nābhijānāmi,",
"thi-ap10:15.4": "dakadānassidaṃ phalaṃ.",
"thi-ap10:16.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap10:16.4": "viharāmi anāsavā.",
"thi-ap10:17.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap10:17.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap10:18.1": "Paṭisambhidā catasso, … pe …",
"thi-ap10:18.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap10:19.1": "Itthaṃ sudaṃ udakadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap10:20.1": "Udakadāyikātheriyāpadānaṃ dasamaṃ.",
"thi-ap10:21.1": "Sumedhāvaggo paṭhamo.",
"thi-ap10:22.1": "Tassuddānaṃ",
"thi-ap10:23.1": "Sumedhā mekhalādāyī,",
"thi-ap10:23.2": "maṇḍapaṃ saṅkamaṃ dadā;",
"thi-ap10:23.3": "Naḷamālī piṇḍadadā,",
"thi-ap10:23.4": "kaṭacchu uppalappadā.",
"thi-ap10:24.1": "Dīpadā dakadā ceva,",
"thi-ap10:24.2": "gāthāyo gaṇitā iha;",
"thi-ap10:24.3": "Ekagāthāsatañceva,",
"thi-ap10:24.4": "tiṃsati ca taduttari."
}