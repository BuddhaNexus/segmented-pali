{
"thi-ap34:1.1": "Therīapadāna",
"thi-ap34:2.1": "Khattiyāvagga",
"thi-ap34:3.1": "4 Siṅgālamātutherīapadāna",
"thi-ap34:4.1": "“Padumuttaro nāma jino,",
"thi-ap34:4.2": "sabbadhammāna pāragū;",
"thi-ap34:4.3": "Ito satasahassamhi,",
"thi-ap34:4.4": "kappe uppajji nāyako.",
"thi-ap34:5.1": "Tadāhaṃ haṃsavatiyaṃ,",
"thi-ap34:5.2": "jātāmaccakule ahuṃ;",
"thi-ap34:5.3": "Nānāratanapajjote,",
"thi-ap34:5.4": "iddhe phīte mahaddhane.",
"thi-ap34:6.1": "Pitunā saha gantvāna,",
"thi-ap34:6.2": "mahājanapurakkhatā;",
"thi-ap34:6.3": "Dhammaṃ buddhassa sutvāna,",
"thi-ap34:6.4": "pabbajiṃ anagāriyaṃ.",
"thi-ap34:7.1": "Pabbajitvāna kāyena,",
"thi-ap34:7.2": "pāpakammaṃ vivajjayiṃ;",
"thi-ap34:7.3": "Vacīduccaritaṃ hitvā,",
"thi-ap34:7.4": "ājīvaṃ parisodhayiṃ.",
"thi-ap34:8.1": "Buddhe pasannā dhamme ca,",
"thi-ap34:8.2": "saṃghe ca tibbagāravā;",
"thi-ap34:8.3": "Saddhammassavane yuttā,",
"thi-ap34:8.4": "buddhadassanalālasā.",
"thi-ap34:9.1": "Aggaṃ saddhādhimuttānaṃ,",
"thi-ap34:9.2": "assosiṃ bhikkhuniṃ tadā;",
"thi-ap34:9.3": "Taṃ ṭhānaṃ patthayitvāna,",
"thi-ap34:9.4": "tisso sikkhā apūrayiṃ.",
"thi-ap34:10.1": "Tato maṃ sugato āha,",
"thi-ap34:10.2": "karuṇānugatāsayo;",
"thi-ap34:10.3": "‘Yassa saddhā tathāgate,",
"thi-ap34:10.4": "acalā suppatiṭṭhitā;",
"thi-ap34:10.5": "Sīlañca yassa kalyāṇaṃ,",
"thi-ap34:10.6": "ariyakantaṃ pasaṃsitaṃ.",
"thi-ap34:11.1": "Saṃghe pasādo yassatthi,",
"thi-ap34:11.2": "ujubhūtañca dassanaṃ;",
"thi-ap34:11.3": "Adaliddoti taṃ āhu,",
"thi-ap34:11.4": "amoghaṃ tassa jīvitaṃ.",
"thi-ap34:12.1": "Tasmā saddhañca sīlañca,",
"thi-ap34:12.2": "pasādaṃ dhammadassanaṃ;",
"thi-ap34:12.3": "Anuyuñjetha medhāvī,",
"thi-ap34:12.4": "saraṃ buddhāna sāsanaṃ’.",
"thi-ap34:13.1": "Taṃ sutvāhaṃ pamuditā,",
"thi-ap34:13.2": "apucchiṃ paṇidhiṃ mama;",
"thi-ap34:13.3": "Tadā anomo amito,",
"thi-ap34:13.4": "byākarittha vināyako;",
"thi-ap34:13.5": "‘Buddhe pasannā kalyāṇī,",
"thi-ap34:13.6": "lacchase taṃ supatthitaṃ.",
"thi-ap34:14.1": "Satasahassito kappe,",
"thi-ap34:14.2": "okkākakulasambhavo;",
"thi-ap34:14.3": "Gotamo nāma gottena,",
"thi-ap34:14.4": "satthā loke bhavissati.",
"thi-ap34:15.1": "Tassa dhammesu dāyādā,",
"thi-ap34:15.2": "orasā dhammanimmitā;",
"thi-ap34:15.3": "Siṅgālakassa mātāti,",
"thi-ap34:15.4": "hessati satthu sāvikā’.",
"thi-ap34:16.1": "Taṃ sutvā muditā hutvā,",
"thi-ap34:16.2": "yāvajīvaṃ tadā jinaṃ;",
"thi-ap34:16.3": "Mettacittā paricariṃ,",
"thi-ap34:16.4": "paṭipattīhi nāyakaṃ.",
"thi-ap34:17.1": "Tena kammena sukatena,",
"thi-ap34:17.2": "cetanāpaṇidhīhi ca;",
"thi-ap34:17.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap34:17.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap34:18.1": "Pacchime ca bhave dāni,",
"thi-ap34:18.2": "giribbajapuruttame;",
"thi-ap34:18.3": "Jātā seṭṭhikule phīte,",
"thi-ap34:18.4": "mahāratanasañcaye.",
"thi-ap34:19.1": "Putto siṅgālako nāma,",
"thi-ap34:19.2": "mamāsi vipathe rato;",
"thi-ap34:19.3": "Diṭṭhigahanapakkhando,",
"thi-ap34:19.4": "disāpūjanatapparo.",
"thi-ap34:20.1": "Nānādisā namassantaṃ,",
"thi-ap34:20.2": "piṇḍāya nagaraṃ vajaṃ;",
"thi-ap34:20.3": "Taṃ disvā ovadī buddho,",
"thi-ap34:20.4": "magge ṭhatvā vināyako.",
"thi-ap34:21.1": "Tassa desayato dhammaṃ,",
"thi-ap34:21.2": "panādo vimhayo ahu;",
"thi-ap34:21.3": "Dvekoṭinaranārīnaṃ,",
"thi-ap34:21.4": "dhammābhisamayo ahu.",
"thi-ap34:22.1": "Tadāhaṃ parisaṃ gantvā,",
"thi-ap34:22.2": "sutvā sugatabhāsitaṃ;",
"thi-ap34:22.3": "Sotāpattiphalaṃ pattā,",
"thi-ap34:22.4": "pabbajiṃ anagāriyaṃ.",
"thi-ap34:23.1": "Na cireneva kālena,",
"thi-ap34:23.2": "buddhadassanalālasā;",
"thi-ap34:23.3": "Anussatiṃ taṃ bhāvetvā,",
"thi-ap34:23.4": "arahattamapāpuṇiṃ.",
"thi-ap34:24.1": "Dassanatthāya buddhassa,",
"thi-ap34:24.2": "sabbadā ca vajāmahaṃ;",
"thi-ap34:24.3": "Atittāyeva passāmi,",
"thi-ap34:24.4": "rūpaṃ nayananandanaṃ.",
"thi-ap34:25.1": "Sabbapāramisambhūtaṃ,",
"thi-ap34:25.2": "lakkhīnilayanaṃ varaṃ;",
"thi-ap34:25.3": "Rūpaṃ sabbasubhākiṇṇaṃ,",
"thi-ap34:25.4": "atittā viharāmahaṃ.",
"thi-ap34:26.1": "Jino tasmiṃ guṇe tuṭṭho,",
"thi-ap34:26.2": "etadagge ṭhapesi maṃ;",
"thi-ap34:26.3": "‘Siṅgālakassa yā mātā,",
"thi-ap34:26.4": "aggā saddhādhimuttikā’.",
"thi-ap34:27.1": "Iddhīsu ca vasī homi,",
"thi-ap34:27.2": "dibbāya sotadhātuyā;",
"thi-ap34:27.3": "Cetopariyañāṇassa,",
"thi-ap34:27.4": "vasī homi mahāmuni.",
"thi-ap34:28.1": "Pubbenivāsaṃ jānāmi,",
"thi-ap34:28.2": "dibbacakkhu visodhitaṃ;",
"thi-ap34:28.3": "Sabbāsavā parikkhīṇā,",
"thi-ap34:28.4": "natthi dāni punabbhavo.",
"thi-ap34:29.1": "Atthadhammaniruttīsu,",
"thi-ap34:29.2": "paṭibhāne tatheva ca;",
"thi-ap34:29.3": "Ñāṇaṃ mama mahāvīra,",
"thi-ap34:29.4": "uppannaṃ tava santike.",
"thi-ap34:30.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap34:30.4": "viharāmi anāsavā.",
"thi-ap34:31.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap34:31.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap34:32.1": "Paṭisambhidā catasso, … pe …",
"thi-ap34:32.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap34:33.1": "Itthaṃ sudaṃ siṅgālamātā bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap34:34.1": "Siṅgālamātutheriyāpadānaṃ catutthaṃ."
}