{
"thi-ap35:1.1": "Therīapadāna",
"thi-ap35:2.1": "Khattiyāvagga",
"thi-ap35:3.1": "5. Sukkātherīapadāna",
"thi-ap35:4.1": "“Ekanavutito kappe,",
"thi-ap35:4.2": "vipassī nāma nāyako;",
"thi-ap35:4.3": "Uppajji cārudassano,",
"thi-ap35:4.4": "sabbadhammavipassako.",
"thi-ap35:5.1": "Tadāhaṃ bandhumatiyaṃ,",
"thi-ap35:5.2": "jātā aññatare kule;",
"thi-ap35:5.3": "Dhammaṃ sutvāna munino,",
"thi-ap35:5.4": "pabbajiṃ anagāriyaṃ.",
"thi-ap35:6.1": "Bahussutā dhammadharā,",
"thi-ap35:6.2": "paṭibhānavatī tathā;",
"thi-ap35:6.3": "Vicittakathikā cāpi,",
"thi-ap35:6.4": "jinasāsanakārikā.",
"thi-ap35:7.1": "Tadā dhammakathaṃ katvā,",
"thi-ap35:7.2": "hitāya janataṃ bahuṃ;",
"thi-ap35:7.3": "Tato cutāhaṃ tusitaṃ,",
"thi-ap35:7.4": "upapannā yasassinī.",
"thi-ap35:8.1": "Ekattiṃse ito kappe,",
"thi-ap35:8.2": "sikhī viya sikhī jino;",
"thi-ap35:8.3": "Tapanto yasasā loke,",
"thi-ap35:8.4": "uppajji vadataṃ varo.",
"thi-ap35:9.1": "Tadāpi pabbajitvāna,",
"thi-ap35:9.2": "buddhasāsanakovidā;",
"thi-ap35:9.3": "Jotetvā jinavākyāni,",
"thi-ap35:9.4": "tatopi tidivaṃ gatā.",
"thi-ap35:10.1": "Ekattiṃseva kappamhi,",
"thi-ap35:10.2": "vessabhū nāma nāyako;",
"thi-ap35:10.3": "Uppajjittha mahāñāṇī,",
"thi-ap35:10.4": "tadāpi ca tathevahaṃ.",
"thi-ap35:11.1": "Pabbajitvā dhammadharā,",
"thi-ap35:11.2": "jotayiṃ jinasāsanaṃ;",
"thi-ap35:11.3": "Gantvā marupuraṃ rammaṃ,",
"thi-ap35:11.4": "anubhosiṃ mahāsukhaṃ.",
"thi-ap35:12.1": "Imamhi bhaddake kappe,",
"thi-ap35:12.2": "kakusandho jinuttamo;",
"thi-ap35:12.3": "Uppajji narasaraṇo,",
"thi-ap35:12.4": "tadāpi ca tathevahaṃ.",
"thi-ap35:13.1": "Pabbajitvā munimataṃ,",
"thi-ap35:13.2": "jotayitvā yathāyukaṃ;",
"thi-ap35:13.3": "Tato cutāhaṃ tidivaṃ,",
"thi-ap35:13.4": "agaṃ sabhavanaṃ yathā.",
"thi-ap35:14.1": "Imasmiṃyeva kappamhi,",
"thi-ap35:14.2": "koṇāgamananāyako;",
"thi-ap35:14.3": "Uppajji lokasaraṇo,",
"thi-ap35:14.4": "araṇo amataṅgato.",
"thi-ap35:15.1": "Tadāpi pabbajitvāna,",
"thi-ap35:15.2": "sāsane tassa tādino;",
"thi-ap35:15.3": "Bahussutā dhammadharā,",
"thi-ap35:15.4": "jotayiṃ jinasāsanaṃ.",
"thi-ap35:16.1": "Imasmiṃyeva kappamhi,",
"thi-ap35:16.2": "kassapo munimuttamo;",
"thi-ap35:16.3": "Uppajji lokasaraṇo,",
"thi-ap35:16.4": "araṇo maraṇantagū.",
"thi-ap35:17.1": "Tassāpi naravīrassa,",
"thi-ap35:17.2": "pabbajitvāna sāsane;",
"thi-ap35:17.3": "Pariyāpuṭasaddhammā,",
"thi-ap35:17.4": "paripucchā visāradā.",
"thi-ap35:18.1": "Susīlā lajjinī ceva,",
"thi-ap35:18.2": "tīsu sikkhāsu kovidā;",
"thi-ap35:18.3": "Bahuṃ dhammakathaṃ katvā,",
"thi-ap35:18.4": "yāvajīvaṃ mahāmune.",
"thi-ap35:19.1": "Tena kammavipākena,",
"thi-ap35:19.2": "cetanāpaṇidhīhi ca;",
"thi-ap35:19.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap35:19.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap35:20.1": "Pacchime ca bhave dāni,",
"thi-ap35:20.2": "giribbajapuruttame;",
"thi-ap35:20.3": "Jātā seṭṭhikule phīte,",
"thi-ap35:20.4": "mahāratanasañcaye.",
"thi-ap35:21.1": "Yadā bhikkhusahassena,",
"thi-ap35:21.2": "parivuto lokanāyako;",
"thi-ap35:21.3": "Upāgami rājagahaṃ,",
"thi-ap35:21.4": "sahassakkhena vaṇṇito.",
"thi-ap35:22.1": "Danto dantehi saha purāṇajaṭilehi,",
"thi-ap35:22.2": "Vippamutto vippamuttehi;",
"thi-ap35:22.3": "Siṅgīnikkhasavaṇṇo,",
"thi-ap35:22.4": "Rājagahaṃ pāvisi bhagavā.",
"thi-ap35:23.1": "Disvā buddhānubhāvaṃ taṃ,",
"thi-ap35:23.2": "sutvāva guṇasañcayaṃ;",
"thi-ap35:23.3": "Buddhe cittaṃ pasādetvā,",
"thi-ap35:23.4": "pūjayiṃ taṃ yathābalaṃ.",
"thi-ap35:24.1": "Aparena ca kālena,",
"thi-ap35:24.2": "dhammadinnāya santike;",
"thi-ap35:24.3": "Agārā nikkhamitvāna,",
"thi-ap35:24.4": "pabbajiṃ anagāriyaṃ.",
"thi-ap35:25.1": "Kesesu chijjamānesu,",
"thi-ap35:25.2": "kilese jhāpayiṃ ahaṃ;",
"thi-ap35:25.3": "Uggahiṃ sāsanaṃ sabbaṃ,",
"thi-ap35:25.4": "pabbajitvā cirenahaṃ.",
"thi-ap35:26.1": "Tato dhammamadesesiṃ,",
"thi-ap35:26.2": "mahājanasamāgame;",
"thi-ap35:26.3": "Dhamme desiyamānamhi,",
"thi-ap35:26.4": "dhammābhisamayo ahu.",
"thi-ap35:27.1": "Nekapāṇasahassānaṃ,",
"thi-ap35:27.2": "taṃ viditvātivimhito;",
"thi-ap35:27.3": "Abhippasanno me yakkho,",
"thi-ap35:27.4": "bhamitvāna giribbajaṃ.",
"thi-ap35:28.1": "Kiṃ me katā rājagahe manussā,",
"thi-ap35:28.2": "Madhuṃ pītāva acchare;",
"thi-ap35:28.3": "Ye sukkaṃ na upāsanti,",
"thi-ap35:28.4": "Desentiṃ amataṃ padaṃ.",
"thi-ap35:29.1": "Tañca appaṭivānīyaṃ,",
"thi-ap35:29.2": "asecanakamojavaṃ;",
"thi-ap35:29.3": "Pivanti maññe sappaññā,",
"thi-ap35:29.4": "valāhakamivaddhagū.",
"thi-ap35:30.1": "Iddhīsu ca vasī homi,",
"thi-ap35:30.2": "dibbāya sotadhātuyā;",
"thi-ap35:30.3": "Cetopariyañāṇassa,",
"thi-ap35:30.4": "vasī homi mahāmune.",
"thi-ap35:31.1": "Pubbenivāsaṃ jānāmi,",
"thi-ap35:31.2": "dibbacakkhu visodhitaṃ;",
"thi-ap35:31.3": "Sabbāsavā parikkhīṇā,",
"thi-ap35:31.4": "natthi dāni punabbhavo.",
"thi-ap35:32.1": "Atthadhammaniruttīsu,",
"thi-ap35:32.2": "paṭibhāne tatheva ca;",
"thi-ap35:32.3": "Ñāṇaṃ mama mahāvīra,",
"thi-ap35:32.4": "uppannaṃ tava santike.",
"thi-ap35:33.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap35:33.4": "viharāmi anāsavā.",
"thi-ap35:34.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap35:34.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap35:35.1": "Paṭisambhidā catasso, … pe …",
"thi-ap35:35.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap35:36.1": "Itthaṃ sudaṃ sukkā bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap35:37.1": "Sukkātheriyāpadānaṃ pañcamaṃ.",
"thi-ap35:37.2": "Pañcamaṃ bhāṇavāraṃ."
}