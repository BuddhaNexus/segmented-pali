{
"thi-ap6:1.1": "Therīapadāna",
"thi-ap6:2.1": "Sumedhāvagga",
"thi-ap6:3.1": "6. Ekapiṇḍapātadāyikātherīapadāna",
"thi-ap6:4.1": "“Nagare bandhumatiyā,",
"thi-ap6:4.2": "bandhumā nāma khattiyo;",
"thi-ap6:4.3": "Tassa rañño ahuṃ bhariyā,",
"thi-ap6:4.4": "ekajjhaṃ cārayāmahaṃ.",
"thi-ap6:5.1": "Rahogatā nisīditvā,",
"thi-ap6:5.2": "evaṃ cintesahaṃ tadā;",
"thi-ap6:5.3": "‘Ādāya gamanīyaṃ hi,",
"thi-ap6:5.4": "kusalaṃ natthi me kataṃ.",
"thi-ap6:6.1": "Mahābhitāpaṃ kaṭukaṃ,",
"thi-ap6:6.2": "ghorarūpaṃ sudāruṇaṃ;",
"thi-ap6:6.3": "Nirayaṃ nūna gacchāmi,",
"thi-ap6:6.4": "ettha me natthi saṃsayo’.",
"thi-ap6:7.1": "Rājānaṃ upasaṅkamma,",
"thi-ap6:7.2": "idaṃ vacanamabraviṃ;",
"thi-ap6:7.3": "‘Ekaṃ me samaṇaṃ dehi,",
"thi-ap6:7.4": "bhojayissāmi khattiya’.",
"thi-ap6:8.1": "Adāsi me mahārājā,",
"thi-ap6:8.2": "samaṇaṃ bhāvitindriyaṃ;",
"thi-ap6:8.3": "Tassa pattaṃ gahetvāna,",
"thi-ap6:8.4": "paramannena pūrayiṃ.",
"thi-ap6:9.1": "Pūrayitvā paramannaṃ,",
"thi-ap6:9.2": "gandhālepaṃ akāsahaṃ;",
"thi-ap6:9.3": "Jālena pidahitvāna,",
"thi-ap6:9.4": "vatthayugena chādayiṃ.",
"thi-ap6:10.1": "Ārammaṇaṃ mamaṃ etaṃ,",
"thi-ap6:10.2": "sarāmi yāvajīvihaṃ;",
"thi-ap6:10.3": "Tattha cittaṃ pasādetvā,",
"thi-ap6:10.4": "tāvatiṃsamagacchahaṃ.",
"thi-ap6:11.1": "Tiṃsānaṃ devarājūnaṃ,",
"thi-ap6:11.2": "mahesittamakārayiṃ;",
"thi-ap6:11.3": "Manasā patthitaṃ mayhaṃ,",
"thi-ap6:11.4": "nibbattati yathicchitaṃ.",
"thi-ap6:12.1": "Vīsānaṃ cakkavattīnaṃ,",
"thi-ap6:12.2": "mahesittamakārayiṃ;",
"thi-ap6:12.3": "Ocitattāva hutvāna,",
"thi-ap6:12.4": "saṃsarāmi bhavesvahaṃ.",
"thi-ap6:13.1": "Sabbabandhanamuttāhaṃ,",
"thi-ap6:13.2": "apetā me upādikā;",
"thi-ap6:13.3": "Sabbāsavā parikkhīṇā,",
"thi-ap6:13.4": "natthi dāni punabbhavo.",
"thi-ap6:14.1": "Ekanavutito kappe,",
"thi-ap6:14.2": "yaṃ dānamadadiṃ tadā;",
"thi-ap6:14.3": "Duggatiṃ nābhijānāmi,",
"thi-ap6:14.4": "piṇḍapātassidaṃ phalaṃ.",
"thi-ap6:15.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap6:15.4": "viharāmi anāsavā.",
"thi-ap6:16.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap6:16.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap6:17.1": "Paṭisambhidā catasso, … pe …",
"thi-ap6:17.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap6:18.1": "Itthaṃ sudaṃ ekapiṇḍapātadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap6:19.1": "Ekapiṇḍapātadāyikātheriyāpadānaṃ chaṭṭhaṃ."
}