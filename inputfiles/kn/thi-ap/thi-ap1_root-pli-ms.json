{
"thi-ap1:1.1": "Therīapadāna",
"thi-ap1:2.1": "Sumedhāvagga",
"thi-ap1:3.1": "1. Sumedhātherīapadāna",
"thi-ap1:4.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
"thi-ap1:5.1": "Atha therikāpadānāni suṇātha—",
"thi-ap1:6.1": "“Bhagavati koṇāgamane,",
"thi-ap1:6.2": "Saṃghārāmamhi navanivesanamhi;",
"thi-ap1:6.3": "Sakhiyo tisso janiyo,",
"thi-ap1:6.4": "Vihāradānaṃ adāsimha.",
"thi-ap1:7.1": "Dasakkhattuṃ satakkhattuṃ,",
"thi-ap1:7.2": "Dasasatakkhattuṃ satānañca satakkhattuṃ;",
"thi-ap1:7.3": "Devesu upapajjimha,",
"thi-ap1:7.4": "Ko vādo mānuse bhave.",
"thi-ap1:8.1": "Deve mahiddhikā ahumha,",
"thi-ap1:8.2": "mānusakamhi ko vādo;",
"thi-ap1:8.3": "Sattaratanamahesī,",
"thi-ap1:8.4": "itthiratanaṃ ahaṃ bhaviṃ.",
"thi-ap1:9.1": "Idha sañcitakusalā,",
"thi-ap1:9.2": "susamiddhakulappajā;",
"thi-ap1:9.3": "Dhanañjānī ca khemā ca,",
"thi-ap1:9.4": "ahampi ca tayo janā.",
"thi-ap1:10.1": "Ārāmaṃ sukataṃ katvā,",
"thi-ap1:10.2": "sabbāvayavamaṇḍitaṃ;",
"thi-ap1:10.3": "Buddhappamukhasaṃghassa,",
"thi-ap1:10.4": "niyyādetvā samoditā.",
"thi-ap1:11.1": "Yattha yatthūpapajjāmi,",
"thi-ap1:11.2": "tassa kammassa vāhasā;",
"thi-ap1:11.3": "Devesu aggataṃ pattā,",
"thi-ap1:11.4": "manussesu tatheva ca.",
"thi-ap1:12.1": "Imasmiṃyeva kappamhi,",
"thi-ap1:12.2": "brahmabandhu mahāyaso;",
"thi-ap1:12.3": "Kassapo nāma gottena,",
"thi-ap1:12.4": "uppajji vadataṃ varo.",
"thi-ap1:13.1": "Upaṭṭhāko mahesissa,",
"thi-ap1:13.2": "tadā āsi narissaro;",
"thi-ap1:13.3": "Kāsirājā kikī nāma,",
"thi-ap1:13.4": "bārāṇasipuruttame.",
"thi-ap1:14.1": "Tassāsuṃ satta dhītaro,",
"thi-ap1:14.2": "rājakaññā sukhedhitā;",
"thi-ap1:14.3": "Buddhopaṭṭhānaniratā,",
"thi-ap1:14.4": "brahmacariyaṃ cariṃsu tā.",
"thi-ap1:15.1": "Tāsaṃ sahāyikā hutvā,",
"thi-ap1:15.2": "sīlesu susamāhitā;",
"thi-ap1:15.3": "Datvā dānāni sakkaccaṃ,",
"thi-ap1:15.4": "agāreva vataṃ cariṃ.",
"thi-ap1:16.1": "Tena kammena sukatena,",
"thi-ap1:16.2": "cetanāpaṇidhīhi ca;",
"thi-ap1:16.3": "Jahitvā mānusaṃ dehaṃ,",
"thi-ap1:16.4": "tāvatiṃsūpagā ahaṃ.",
"thi-ap1:17.1": "Tato cutā yāmamagaṃ,",
"thi-ap1:17.2": "tatohaṃ tusitaṃ gatā;",
"thi-ap1:17.3": "Tato ca nimmānaratiṃ,",
"thi-ap1:17.4": "vasavattipuraṃ tato.",
"thi-ap1:18.1": "Yattha yatthūpapajjāmi,",
"thi-ap1:18.2": "puññakammasamohitā;",
"thi-ap1:18.3": "Tattha tattheva rājūnaṃ,",
"thi-ap1:18.4": "mahesittamakārayiṃ.",
"thi-ap1:19.1": "Tato cutā manussatte,",
"thi-ap1:19.2": "rājūnaṃ cakkavattinaṃ;",
"thi-ap1:19.3": "Maṇḍalīnañca rājūnaṃ,",
"thi-ap1:19.4": "mahesittamakārayiṃ.",
"thi-ap1:20.1": "Sampattimanubhotvāna,",
"thi-ap1:20.2": "devesu mānusesu ca;",
"thi-ap1:20.3": "Sabbattha sukhitā hutvā,",
"thi-ap1:20.4": "nekajātīsu saṃsariṃ.",
"thi-ap1:21.1": "So hetu ca so pabhavo,",
"thi-ap1:21.2": "Tammūlaṃ sāsane khamaṃ;",
"thi-ap1:21.3": "Paṭhamaṃ taṃ samodhānaṃ,",
"thi-ap1:21.4": "Taṃ dhammaratāya nibbānaṃ.",
"thi-ap1:22.1": "Kilesā jhāpitā mayhaṃ,",
"thi-ap1:22.2": "bhavā sabbe samūhatā;",
"thi-ap1:22.3": "Nāgīva bandhanaṃ chetvā,",
"thi-ap1:22.4": "viharāmi anāsavā.",
"thi-ap1:23.1": "Svāgataṃ vata me āsi,",
"thi-ap1:23.2": "buddhaseṭṭhassa santike;",
"thi-ap1:23.3": "Tisso vijjā anuppattā,",
"thi-ap1:23.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap1:24.1": "Paṭisambhidā catasso,",
"thi-ap1:24.2": "vimokkhāpi ca aṭṭhime;",
"thi-ap1:24.3": "Chaḷabhiññā sacchikatā,",
"thi-ap1:24.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap1:25.1": "Itthaṃ sudaṃ sumedhā bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap1:26.1": "Sumedhātheriyāpadānaṃ paṭhamaṃ."
}