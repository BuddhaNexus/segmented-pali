{
"thi-ap31:1.1": "Therīapadāna",
"thi-ap31:2.1": "Khattiyāvagga",
"thi-ap31:3.1": "1 Yasavatīpamukhaaṭṭhārasabhikkhunīsahassaapadāna",
"thi-ap31:4.1": "“Bhavā sabbe parikkhīṇā,",
"thi-ap31:4.2": "bhavā santi vimocitā;",
"thi-ap31:4.3": "Sabbāsavā ca no natthi,",
"thi-ap31:4.4": "ārocema mahāmune.",
"thi-ap31:5.1": "Purimaṃ kusalaṃ kammaṃ,",
"thi-ap31:5.2": "yaṃ kiñci sādhupatthitaṃ;",
"thi-ap31:5.3": "Paribhogamayaṃ dinnaṃ,",
"thi-ap31:5.4": "tuyhatthāya mahāmune.",
"thi-ap31:6.1": "Buddhapaccekabuddhānaṃ,",
"thi-ap31:6.2": "sāvakānañca patthitaṃ;",
"thi-ap31:6.3": "Paribhogamayaṃ dinnaṃ,",
"thi-ap31:6.4": "tuyhatthāya mahāmune.",
"thi-ap31:7.1": "Uccanīcamayaṃ kammaṃ,",
"thi-ap31:7.2": "bhikkhūnaṃ sādhupatthitaṃ;",
"thi-ap31:7.3": "Uccākulaparikammaṃ,",
"thi-ap31:7.4": "katametaṃ mahāmune.",
"thi-ap31:8.1": "Teneva sukkamūlena,",
"thi-ap31:8.2": "coditā kammasampadā;",
"thi-ap31:8.3": "Mānusikamatikkantā,",
"thi-ap31:8.4": "jāyiṃsu khattiye kule.",
"thi-ap31:9.1": "Uppatte ca kate kamme,",
"thi-ap31:9.2": "jātiyā vāpi ekato;",
"thi-ap31:9.3": "Pacchime ekato jātā,",
"thi-ap31:9.4": "khattiyā kulasambhavā.",
"thi-ap31:10.1": "Rūpavatī bhogavatī,",
"thi-ap31:10.2": "lābhasakkārapūjitā;",
"thi-ap31:10.3": "Antepure mahāvīra,",
"thi-ap31:10.4": "devānaṃ viya nandane.",
"thi-ap31:11.1": "Nibbinditvā agāramhā,",
"thi-ap31:11.2": "pabbajimhanagāriyaṃ;",
"thi-ap31:11.3": "Katipāhaṃ upādāya,",
"thi-ap31:11.4": "sabbā pattāmha nibbutiṃ.",
"thi-ap31:12.1": "Cīvaraṃ piṇḍapātañca,",
"thi-ap31:12.2": "paccayaṃ sayanāsanaṃ;",
"thi-ap31:12.3": "Upanenti bahū amhe,",
"thi-ap31:12.4": "sadā sakkatapūjitā.",
"thi-ap31:13.1": "Kilesā jhāpitā amhaṃ,",
"thi-ap31:13.2": "bhavā sabbe samūhatā;",
"thi-ap31:13.3": "Nāgīva bandhanaṃ chetvā,",
"thi-ap31:13.4": "viharāma anāsavā.",
"thi-ap31:14.1": "Svāgataṃ vata no āsi,",
"thi-ap31:14.2": "mama buddhassa santike;",
"thi-ap31:14.3": "Tisso vijjā anuppattā,",
"thi-ap31:14.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap31:15.1": "Paṭisambhidā catasso,",
"thi-ap31:15.2": "vimokkhāpi ca aṭṭhime;",
"thi-ap31:15.3": "Chaḷabhiññā sacchikatā,",
"thi-ap31:15.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap31:16.1": "Itthaṃ sudaṃ yasavatīpamukhāni khattiyakaññābhikkhuniyo aṭṭhārasasahassāni bhagavato sammukhā imā gāthāyo abhāsitthāti.",
"thi-ap31:17.1": "Yasavatīpamukhaaṭṭhārasabhikkhunīsahassāpadānaṃ paṭhamaṃ."
}