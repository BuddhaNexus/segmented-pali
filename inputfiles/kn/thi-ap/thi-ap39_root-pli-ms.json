{
"thi-ap39:1.1": "Therīapadāna",
"thi-ap39:2.1": "Khattiyāvagga",
"thi-ap39:3.1": "9 Ambapālitherīapadāna",
"thi-ap39:4.1": "“Yo raṃsiphusitāveḷo,",
"thi-ap39:4.2": "phusso nāma mahāmuni;",
"thi-ap39:4.3": "Tassāhaṃ bhaginī āsiṃ,",
"thi-ap39:4.4": "ajāyiṃ khattiye kule.",
"thi-ap39:5.1": "Tassa dhammaṃ suṇitvāhaṃ,",
"thi-ap39:5.2": "vippasannena cetasā;",
"thi-ap39:5.3": "Mahādānaṃ daditvāna,",
"thi-ap39:5.4": "patthayiṃ rūpasampadaṃ.",
"thi-ap39:6.1": "Ekattiṃse ito kappe,",
"thi-ap39:6.2": "sikhī lokagganāyako;",
"thi-ap39:6.3": "Uppanno lokapajjoto,",
"thi-ap39:6.4": "tilokasaraṇo jino.",
"thi-ap39:7.1": "Tadāruṇapure ramme,",
"thi-ap39:7.2": "brāhmaññakulasambhavā;",
"thi-ap39:7.3": "Vimuttacittaṃ kupitā,",
"thi-ap39:7.4": "bhikkhuniṃ abhisāpayiṃ.",
"thi-ap39:8.1": "‘Vesikāva anācārā’,",
"thi-ap39:8.2": "jinasāsanadūsikā;",
"thi-ap39:8.3": "Evaṃ akkosayitvāna,",
"thi-ap39:8.4": "tena pāpena kammunā.",
"thi-ap39:9.1": "Dāruṇaṃ nirayaṃ gantvā,",
"thi-ap39:9.2": "mahādukkhasamappitā;",
"thi-ap39:9.3": "Tato cutā manussesu,",
"thi-ap39:9.4": "upapannā tapassinī.",
"thi-ap39:10.1": "Dasajātisahassāni,",
"thi-ap39:10.2": "gaṇikattamakārayiṃ;",
"thi-ap39:10.3": "Tamhā pāpā na muccissaṃ,",
"thi-ap39:10.4": "bhutvā duṭṭhavisaṃ yathā.",
"thi-ap39:11.1": "Brahmacariyamasevissaṃ,",
"thi-ap39:11.2": "kassape jinasāsane;",
"thi-ap39:11.3": "Tena kammavipākena,",
"thi-ap39:11.4": "ajāyiṃ tidase pure.",
"thi-ap39:12.1": "Pacchime bhave sampatte,",
"thi-ap39:12.2": "ahosiṃ opapātikā;",
"thi-ap39:12.3": "Ambasākhantare jātā,",
"thi-ap39:12.4": "ambapālīti tenahaṃ.",
"thi-ap39:13.1": "Parivutā pāṇakoṭīhi,",
"thi-ap39:13.2": "pabbajiṃ jinasāsane;",
"thi-ap39:13.3": "Pattāhaṃ acalaṃ ṭhānaṃ,",
"thi-ap39:13.4": "dhītā buddhassa orasā.",
"thi-ap39:14.1": "Iddhīsu ca vasī homi,",
"thi-ap39:14.2": "sotadhātuvisuddhiyā;",
"thi-ap39:14.3": "Cetopariyañāṇassa,",
"thi-ap39:14.4": "vasī homi mahāmuni.",
"thi-ap39:15.1": "Pubbenivāsaṃ jānāmi,",
"thi-ap39:15.2": "dibbacakkhu visodhitaṃ;",
"thi-ap39:15.3": "Sabbāsavā parikkhīṇā,",
"thi-ap39:15.4": "natthi dāni punabbhavo.",
"thi-ap39:16.1": "Atthadhammaniruttīsu,",
"thi-ap39:16.2": "paṭibhāne tatheva ca;",
"thi-ap39:16.3": "Ñāṇaṃ me vimalaṃ suddhaṃ,",
"thi-ap39:16.4": "buddhaseṭṭhassa vāhasā.",
"thi-ap39:17.1": "Kilesā jhāpitā mayhaṃ, … pe …",
"thi-ap39:17.4": "viharāmi anāsavā.",
"thi-ap39:18.1": "Svāgataṃ vata me āsi, … pe …",
"thi-ap39:18.4": "kataṃ buddhassa sāsanaṃ.",
"thi-ap39:19.1": "Paṭisambhidā catasso, … pe …",
"thi-ap39:19.4": "kataṃ buddhassa sāsanaṃ”.",
"thi-ap39:20.1": "Itthaṃ sudaṃ ambapāli bhikkhunī imā gāthāyo abhāsitthāti.",
"thi-ap39:21.1": "Ambapālitheriyāpadānaṃ navamaṃ."
}