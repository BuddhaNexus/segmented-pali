{
"bv11:1.1": "Buddhavaṃsa",
"bv11:2.1": "11. Nāradabuddhavaṃsa",
"bv11:3.1": "“Padumassa aparena,",
"bv11:3.2": "sambuddho dvipaduttamo;",
"bv11:3.3": "Nārado nāma nāmena,",
"bv11:3.4": "asamo appaṭipuggalo.",
"bv11:4.1": "So buddho cakkavattissa,",
"bv11:4.2": "jeṭṭho dayitaoraso;",
"bv11:4.3": "Āmukkamālābharaṇo,",
"bv11:4.4": "uyyānaṃ upasaṅkami.",
"bv11:5.1": "Tatthāsi rukkho yasavipulo,",
"bv11:5.2": "Abhirūpo brahā suci;",
"bv11:5.3": "Tamajjhapatvā upanisīdi,",
"bv11:5.4": "Mahāsoṇassa heṭṭhato.",
"bv11:6.1": "Tattha ñāṇavaruppajji,",
"bv11:6.2": "anantaṃ vajirūpamaṃ;",
"bv11:6.3": "Tena vicini saṅkhāre,",
"bv11:6.4": "ukkujjamavakujjakaṃ.",
"bv11:7.1": "Tattha sabbakilesāni,",
"bv11:7.2": "asesamabhivāhayi;",
"bv11:7.3": "Pāpuṇī kevalaṃ bodhiṃ,",
"bv11:7.4": "buddhañāṇe ca cuddasa.",
"bv11:8.1": "Pāpuṇitvāna sambodhiṃ,",
"bv11:8.2": "dhammacakkaṃ pavattayi;",
"bv11:8.3": "Koṭisatasahassānaṃ,",
"bv11:8.4": "paṭhamābhisamayo ahu.",
"bv11:9.1": "Mahādoṇaṃ nāgarājaṃ,",
"bv11:9.2": "vinayanto mahāmuni;",
"bv11:9.3": "Pāṭiheraṃ tadākāsi,",
"bv11:9.4": "dassayanto sadevake.",
"bv11:10.1": "Tadā devamanussānaṃ,",
"bv11:10.2": "tamhi dhammappakāsane;",
"bv11:10.3": "Navutikoṭisahassāni,",
"bv11:10.4": "tariṃsu sabbasaṃsayaṃ.",
"bv11:11.1": "Yamhi kāle mahāvīro,",
"bv11:11.2": "ovadī sakamatrajaṃ;",
"bv11:11.3": "Asītikoṭisahassānaṃ,",
"bv11:11.4": "tatiyābhisamayo ahu.",
"bv11:12.1": "Sannipātā tayo āsuṃ,",
"bv11:12.2": "nāradassa mahesino;",
"bv11:12.3": "Koṭisatasahassānaṃ,",
"bv11:12.4": "paṭhamo āsi samāgamo.",
"bv11:13.1": "Yadā buddho buddhaguṇaṃ,",
"bv11:13.2": "sanidānaṃ pakāsayi;",
"bv11:13.3": "Navutikoṭisahassāni,",
"bv11:13.4": "samiṃsu vimalā tadā.",
"bv11:14.1": "Yadā verocano nāgo,",
"bv11:14.2": "dānaṃ dadāti satthuno;",
"bv11:14.3": "Tadā samiṃsu jinaputtā,",
"bv11:14.4": "asītisatasahassiyo.",
"bv11:15.1": "Ahaṃ tena samayena,",
"bv11:15.2": "jaṭilo uggatāpano;",
"bv11:15.3": "Antalikkhacaro āsiṃ,",
"bv11:15.4": "pañcābhiññāsu pāragū.",
"bv11:16.1": "Tadāpāhaṃ asamasamaṃ,",
"bv11:16.2": "sasaṃghaṃ saparijjanaṃ;",
"bv11:16.3": "Annapānena tappetvā,",
"bv11:16.4": "candanenābhipūjayiṃ.",
"bv11:17.1": "Sopi maṃ tadā byākāsi,",
"bv11:17.2": "nārado lokanāyako;",
"bv11:17.3": "‘Aparimeyyito kappe,",
"bv11:17.4": "ayaṃ buddho bhavissati.",
"bv11:18.1": "Padhānaṃ padahitvāna, … pe …",
"bv11:18.4": "hessāma sammukhā imaṃ’.",
"bv11:19.1": "Tassāpi vacanaṃ sutvā,",
"bv11:19.2": "bhiyyo hāsetva mānasaṃ;",
"bv11:19.3": "Adhiṭṭhahiṃ vataṃ uggaṃ,",
"bv11:19.4": "dasapāramipūriyā.",
"bv11:20.1": "Nagaraṃ dhaññavatī nāma,",
"bv11:20.2": "sudevo nāma khattiyo;",
"bv11:20.3": "Anomā nāma janikā,",
"bv11:20.4": "nāradassa mahesino.",
"bv11:21.1": "Navavassasahassāni,",
"bv11:21.2": "agāraṃ ajjha so vasi;",
"bv11:21.3": "Jito vijitābhirāmo,",
"bv11:21.4": "tayo pāsādamuttamā.",
"bv11:22.1": "Ticattārīsasahassāni,",
"bv11:22.2": "nāriyo samalaṅkatā;",
"bv11:22.3": "Vijitasenā nāma nārī,",
"bv11:22.4": "nanduttaro nāma atrajo.",
"bv11:23.1": "Nimitte caturo disvā,",
"bv11:23.2": "Padasā gamanena nikkhami;",
"bv11:23.3": "Sattāhaṃ padhānacāraṃ,",
"bv11:23.4": "Acarī purisuttamo.",
"bv11:24.1": "Brahmunā yācito santo,",
"bv11:24.2": "nārado lokanāyako;",
"bv11:24.3": "Vatti cakkaṃ mahāvīro,",
"bv11:24.4": "dhanañcuyyānamuttame.",
"bv11:25.1": "Bhaddasālo jitamitto,",
"bv11:25.2": "ahesuṃ aggasāvakā;",
"bv11:25.3": "Vāseṭṭho nāmupaṭṭhāko,",
"bv11:25.4": "nāradassa mahesino.",
"bv11:26.1": "Uttarā phaggunī ceva,",
"bv11:26.2": "ahesuṃ aggasāvikā;",
"bv11:26.3": "Bodhi tassa bhagavato,",
"bv11:26.4": "mahāsoṇoti vuccati.",
"bv11:27.1": "Uggarindo vasabho ca,",
"bv11:27.2": "ahesuṃ aggupaṭṭhakā;",
"bv11:27.3": "Indāvarī ca vaṇḍī ca,",
"bv11:27.4": "ahesuṃ aggupaṭṭhikā.",
"bv11:28.1": "Aṭṭhāsītiratanāni,",
"bv11:28.2": "accuggato mahāmuni;",
"bv11:28.3": "Kañcanagghiyasaṅkāso,",
"bv11:28.4": "dasasahassī virocati.",
"bv11:29.1": "Tassa byāmappabhā kāyā,",
"bv11:29.2": "niddhāvati disodisaṃ;",
"bv11:29.3": "Nirantaraṃ divārattiṃ,",
"bv11:29.4": "yojanaṃ pharate sadā.",
"bv11:30.1": "Na keci tena samayena,",
"bv11:30.2": "samantā yojane janā;",
"bv11:30.3": "Ukkāpadīpe ujjālenti,",
"bv11:30.4": "buddharaṃsīhi otthaṭā.",
"bv11:31.1": "Navutivassasahassāni,",
"bv11:31.2": "āyu vijjati tāvade;",
"bv11:31.3": "Tāvatā tiṭṭhamāno so,",
"bv11:31.4": "tāresi janataṃ bahuṃ.",
"bv11:32.1": "Yathā uḷūhi gaganaṃ,",
"bv11:32.2": "vicittaṃ upasobhati;",
"bv11:32.3": "Tatheva sāsanaṃ tassa,",
"bv11:32.4": "arahantehi sobhati.",
"bv11:33.1": "Saṃsārasotaṃ taraṇāya,",
"bv11:33.2": "sesake paṭipannake;",
"bv11:33.3": "Dhammasetuṃ daḷhaṃ katvā,",
"bv11:33.4": "nibbuto so narāsabho.",
"bv11:34.1": "Sopi buddho asamasamo,",
"bv11:34.2": "Tepi khīṇāsavā atulatejā;",
"bv11:34.3": "Sabbaṃ tamantarahitaṃ,",
"bv11:34.4": "Nanu rittā sabbasaṅkhārā.",
"bv11:35.1": "Nārado jinavasabho,",
"bv11:35.2": "Nibbuto sudassane pure;",
"bv11:35.3": "Tatthevassa thūpavaro,",
"bv11:35.4": "Catuyojanamuggato”ti. #553",
"bv11:36.1": "Nāradassa bhagavato vaṃso navamo."
}