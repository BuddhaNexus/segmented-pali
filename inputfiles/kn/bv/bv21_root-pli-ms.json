{
"bv21:1.1": "Buddhavaṃsa",
"bv21:2.1": "21 Vipassībuddhavaṃsa",
"bv21:3.1": "“Phussassa ca aparena,",
"bv21:3.2": "sambuddho dvipaduttamo;",
"bv21:3.3": "Vipassī nāma nāmena,",
"bv21:3.4": "loke uppajji cakkhumā.",
"bv21:4.1": "Avijjaṃ sabbaṃ padāletvā,",
"bv21:4.2": "patto sambodhimuttamaṃ;",
"bv21:4.3": "Dhammacakkaṃ pavattetuṃ,",
"bv21:4.4": "pakkāmi bandhumatīpuraṃ.",
"bv21:5.1": "Dhammacakkaṃ pavattetvā,",
"bv21:5.2": "ubho bodhesi nāyako;",
"bv21:5.3": "Gaṇanāya na vattabbo,",
"bv21:5.4": "paṭhamābhisamayo ahu.",
"bv21:6.1": "Punāparaṃ amitayaso,",
"bv21:6.2": "tattha saccaṃ pakāsayi;",
"bv21:6.3": "Caturāsītisahassānaṃ,",
"bv21:6.4": "dutiyābhisamayo ahu.",
"bv21:7.1": "Caturāsītisahassāni,",
"bv21:7.2": "sambuddhaṃ anupabbajuṃ;",
"bv21:7.3": "Tesamārāmapattānaṃ,",
"bv21:7.4": "dhammaṃ desesi cakkhumā.",
"bv21:8.1": "Sabbākārena bhāsato,",
"bv21:8.2": "sutvā upanisādino;",
"bv21:8.3": "Tepi dhammavaraṃ gantvā,",
"bv21:8.4": "tatiyābhisamayo ahu.",
"bv21:9.1": "Sannipātā tayo āsuṃ,",
"bv21:9.2": "vipassissa mahesino;",
"bv21:9.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv21:9.4": "santacittāna tādinaṃ.",
"bv21:10.1": "Aṭṭhasaṭṭhisatasahassānaṃ,",
"bv21:10.2": "Paṭhamo āsi samāgamo;",
"bv21:10.3": "Bhikkhusatasahassānaṃ,",
"bv21:10.4": "Dutiyo āsi samāgamo.",
"bv21:11.1": "Asītibhikkhusahassānaṃ,",
"bv21:11.2": "tatiyo āsi samāgamo;",
"bv21:11.3": "Tattha bhikkhugaṇamajjhe,",
"bv21:11.4": "sambuddho atirocati.",
"bv21:12.1": "Ahaṃ tena samayena,",
"bv21:12.2": "nāgarājā mahiddhiko;",
"bv21:12.3": "Atulo nāma nāmena,",
"bv21:12.4": "puññavanto jutindharo.",
"bv21:13.1": "Nekānaṃ nāgakoṭīnaṃ,",
"bv21:13.2": "parivāretvānahaṃ tadā;",
"bv21:13.3": "Vajjanto dibbaturiyehi,",
"bv21:13.4": "lokajeṭṭhaṃ upāgamiṃ.",
"bv21:14.1": "Upasaṅkamitvā sambuddhaṃ,",
"bv21:14.2": "Vipassiṃ lokanāyakaṃ;",
"bv21:14.3": "Maṇimuttaratanakhacitaṃ,",
"bv21:14.4": "Sabbābharaṇavibhūsitaṃ;",
"bv21:14.5": "Nimantetvā dhammarājassa,",
"bv21:14.6": "Suvaṇṇapīṭhamadāsahaṃ.",
"bv21:15.1": "Sopi maṃ buddho byākāsi,",
"bv21:15.2": "saṃghamajjhe nisīdiya;",
"bv21:15.3": "‘Ekanavutito kappe,",
"bv21:15.4": "ayaṃ buddho bhavissati.",
"bv21:16.1": "Ahu kapilavhayā rammā,",
"bv21:16.2": "nikkhamitvā tathāgato;",
"bv21:16.3": "Padhānaṃ padahitvāna,",
"bv21:16.4": "katvā dukkarakārikaṃ.",
"bv21:17.1": "Ajapālarukkhamūlasmiṃ,",
"bv21:17.2": "nisīditvā tathāgato;",
"bv21:17.3": "Tattha pāyāsaṃ paggayha,",
"bv21:17.4": "nerañjaramupehiti.",
"bv21:18.1": "Nerañjarāya tīramhi,",
"bv21:18.2": "pāyāsaṃ ada so jino;",
"bv21:18.3": "Paṭiyattavaramaggena,",
"bv21:18.4": "bodhimūlamupehiti.",
"bv21:19.1": "Tato padakkhiṇaṃ katvā,",
"bv21:19.2": "bodhimaṇḍaṃ anuttaro;",
"bv21:19.3": "Assatthamūle sambodhiṃ,",
"bv21:19.4": "bujjhissati mahāyaso.",
"bv21:20.1": "Imassa janikā mātā,",
"bv21:20.2": "māyā nāma bhavissati;",
"bv21:20.3": "Pitā suddhodano nāma,",
"bv21:20.4": "ayaṃ hessati gotamo.",
"bv21:21.1": "Anāsavā vītarāgā,",
"bv21:21.2": "santacittā samāhitā;",
"bv21:21.3": "Kolito upatisso ca,",
"bv21:21.4": "aggā hessanti sāvakā;",
"bv21:21.5": "Ānando nāmupaṭṭhāko,",
"bv21:21.6": "upaṭṭhissatimaṃ jinaṃ.",
"bv21:22.1": "Khemā uppalavaṇṇā ca,",
"bv21:22.2": "aggā hessanti sāvikā;",
"bv21:22.3": "Anāsavā vītarāgā,",
"bv21:22.4": "santacittā samāhitā;",
"bv21:22.5": "Bodhi tassa bhagavato,",
"bv21:22.6": "assatthoti pavuccati.",
"bv21:23.1": "Citto ca hatthāḷavako,",
"bv21:23.2": "aggā hessantupaṭṭhakā;",
"bv21:23.3": "Nandamātā ca uttarā,",
"bv21:23.4": "aggā hessantupaṭṭhikā;",
"bv21:23.5": "Āyu vassasataṃ tassa,",
"bv21:23.6": "gotamassa yasassino.",
"bv21:24.1": "Idaṃ sutvāna vacanaṃ, … pe …",
"bv21:24.4": "hessāma sammukhā imaṃ’.",
"bv21:25.1": "Tassāhaṃ vacanaṃ sutvā,",
"bv21:25.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv21:25.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv21:25.4": "dasapāramipūriyā.",
"bv21:26.1": "Nagaraṃ bandhumatī nāma,",
"bv21:26.2": "bandhumā nāma khattiyo;",
"bv21:26.3": "Mātā bandhumatī nāma,",
"bv21:26.4": "vipassissa mahesino.",
"bv21:27.1": "Aṭṭhavassasahassāni,",
"bv21:27.2": "agāraṃ ajjha so vasi;",
"bv21:27.3": "Nando sunando sirimā,",
"bv21:27.4": "tayo pāsādamuttamā.",
"bv21:28.1": "Ticattārīsasahassāni,",
"bv21:28.2": "Nāriyo samalaṅkatā;",
"bv21:28.3": "Sudassanā nāma sā nārī,",
"bv21:28.4": "Samavattakkhandho nāma atrajo.",
"bv21:29.1": "Nimitte caturo disvā,",
"bv21:29.2": "rathayānena nikkhami;",
"bv21:29.3": "Anūnaaṭṭhamāsāni,",
"bv21:29.4": "padhānaṃ padahī jino.",
"bv21:30.1": "Brahmunā yācito santo,",
"bv21:30.2": "vipassī lokanāyako;",
"bv21:30.3": "Vatti cakkaṃ mahāvīro,",
"bv21:30.4": "migadāye naruttamo.",
"bv21:31.1": "Khaṇḍo ca tissanāmo ca,",
"bv21:31.2": "ahesuṃ aggasāvakā;",
"bv21:31.3": "Asoko nāmupaṭṭhāko,",
"bv21:31.4": "vipassissa mahesino.",
"bv21:32.1": "Candā ca candamittā ca,",
"bv21:32.2": "ahesuṃ aggasāvikā;",
"bv21:32.3": "Bodhi tassa bhagavato,",
"bv21:32.4": "pāṭalīti pavuccati.",
"bv21:33.1": "Punabbasumitto nāgo ca,",
"bv21:33.2": "ahesuṃ aggupaṭṭhakā;",
"bv21:33.3": "Sirimā uttarā ceva,",
"bv21:33.4": "ahesuṃ aggupaṭṭhikā.",
"bv21:34.1": "Asītihatthamubbedho,",
"bv21:34.2": "vipassī lokanāyako;",
"bv21:34.3": "Pabhā niddhāvati tassa,",
"bv21:34.4": "samantā sattayojane.",
"bv21:35.1": "Asītivassasahassāni,",
"bv21:35.2": "āyu buddhassa tāvade;",
"bv21:35.3": "Tāvatā tiṭṭhamāno so,",
"bv21:35.4": "tāresi janataṃ bahuṃ.",
"bv21:36.1": "Bahudevamanussānaṃ,",
"bv21:36.2": "bandhanā parimocayi;",
"bv21:36.3": "Maggāmaggañca ācikkhi,",
"bv21:36.4": "avasesaputhujjane.",
"bv21:37.1": "Ālokaṃ dassayitvāna,",
"bv21:37.2": "desetvā amataṃ padaṃ;",
"bv21:37.3": "Jalitvā aggikkhandhova,",
"bv21:37.4": "nibbuto so sasāvako.",
"bv21:38.1": "Iddhivaraṃ puññavaraṃ,",
"bv21:38.2": "lakkhaṇañca kusumitaṃ;",
"bv21:38.3": "Sabbaṃ tamantarahitaṃ,",
"bv21:38.4": "nanu rittā sabbasaṅkhārā.",
"bv21:39.1": "Vipassī jinavaro buddho,",
"bv21:39.2": "Sumittārāmamhi nibbuto;",
"bv21:39.3": "Tatthevassa thūpavaro,",
"bv21:39.4": "Sattayojanamussito”ti. #843",
"bv21:40.1": "Vipassissa bhagavato vaṃso ekūnavīsatimo."
}