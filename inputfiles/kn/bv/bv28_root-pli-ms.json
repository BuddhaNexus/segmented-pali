{
"bv28:1.1": "Buddhavaṃsa",
"bv28:2.1": "28. Buddhapakiṇṇakakaṇḍa",
"bv28:3.1": "Aparimeyyito kappe,",
"bv28:3.2": "caturo āsuṃ vināyakā;",
"bv28:3.3": "Taṇhaṅkaro medhaṅkaro,",
"bv28:3.4": "athopi saraṇaṅkaro;",
"bv28:3.5": "Dīpaṅkaro ca sambuddho,",
"bv28:3.6": "ekakappamhi te jinā.",
"bv28:4.1": "Dīpaṅkarassa aparena,",
"bv28:4.2": "koṇḍañño nāma nāyako;",
"bv28:4.3": "Ekova ekakappamhi,",
"bv28:4.4": "tāresi janataṃ bahuṃ.",
"bv28:5.1": "Dīpaṅkarassa bhagavato,",
"bv28:5.2": "koṇḍaññassa ca satthuno;",
"bv28:5.3": "Etesaṃ antarā kappā,",
"bv28:5.4": "gaṇanāto asaṅkhiyā.",
"bv28:6.1": "Koṇḍaññassa aparena,",
"bv28:6.2": "maṅgalo nāma nāyako;",
"bv28:6.3": "Tesampi antarā kappā,",
"bv28:6.4": "gaṇanāto asaṅkhiyā.",
"bv28:7.1": "Maṅgalo ca sumano ca,",
"bv28:7.2": "revato sobhito muni;",
"bv28:7.3": "Tepi buddhā ekakappe,",
"bv28:7.4": "cakkhumanto pabhaṅkarā.",
"bv28:8.1": "Sobhitassa aparena,",
"bv28:8.2": "anomadassī mahāyaso;",
"bv28:8.3": "Tesampi antarā kappā,",
"bv28:8.4": "gaṇanāto asaṅkhiyā.",
"bv28:9.1": "Anomadassī padumo,",
"bv28:9.2": "nārado cāpi nāyako;",
"bv28:9.3": "Tepi buddhā ekakappe,",
"bv28:9.4": "tamantakārakā munī.",
"bv28:10.1": "Nāradassa aparena,",
"bv28:10.2": "Padumuttaro nāma nāyako;",
"bv28:10.3": "Ekakappamhi uppanno,",
"bv28:10.4": "Tāresi janataṃ bahuṃ.",
"bv28:11.1": "Nāradassa bhagavato,",
"bv28:11.2": "padumuttarassa satthuno;",
"bv28:11.3": "Tesampi antarā kappā,",
"bv28:11.4": "gaṇanāto asaṅkhiyā.",
"bv28:12.1": "Kappasatasahassamhi,",
"bv28:12.2": "eko āsi mahāmuni;",
"bv28:12.3": "Padumuttaro lokavidū,",
"bv28:12.4": "āhutīnaṃ paṭiggaho.",
"bv28:13.1": "Tiṃsakappasahassamhi,",
"bv28:13.2": "duve āsuṃ vināyakā;",
"bv28:13.3": "Sumedho ca sujāto ca,",
"bv28:13.4": "orato padumuttarā.",
"bv28:14.1": "Aṭṭhārase kappasate,",
"bv28:14.2": "tayo āsuṃ vināyakā;",
"bv28:14.3": "Piyadassī atthadassī,",
"bv28:14.4": "dhammadassī ca nāyakā.",
"bv28:15.1": "Orato ca sujātassa,",
"bv28:15.2": "sambuddhā dvipaduttamā;",
"bv28:15.3": "Ekakappamhi te buddhā,",
"bv28:15.4": "loke appaṭipuggalā.",
"bv28:16.1": "Catunnavutito kappe,",
"bv28:16.2": "eko āsi mahāmuni;",
"bv28:16.3": "Siddhattho so lokavidū,",
"bv28:16.4": "sallakatto anuttaro.",
"bv28:17.1": "Dvenavute ito kappe,",
"bv28:17.2": "duve āsuṃ vināyakā;",
"bv28:17.3": "Tisso phusso ca sambuddhā,",
"bv28:17.4": "asamā appaṭipuggalā.",
"bv28:18.1": "Ekanavutito kappe,",
"bv28:18.2": "vipassī nāma nāyako;",
"bv28:18.3": "Sopi buddho kāruṇiko,",
"bv28:18.4": "satte mocesi bandhanā.",
"bv28:19.1": "Ekatiṃse ito kappe,",
"bv28:19.2": "duve āsuṃ vināyakā;",
"bv28:19.3": "Sikhī ca vessabhū ceva,",
"bv28:19.4": "asamā appaṭipuggalā.",
"bv28:20.1": "Imamhi bhaddake kappe,",
"bv28:20.2": "tayo āsuṃ vināyakā;",
"bv28:20.3": "Kakusandho koṇāgamano,",
"bv28:20.4": "kassapo cāpi nāyako.",
"bv28:21.1": "Ahametarahi sambuddho,",
"bv28:21.2": "metteyyo cāpi hessati;",
"bv28:21.3": "Etepime pañca buddhā,",
"bv28:21.4": "dhīrā lokānukampakā.",
"bv28:22.1": "Etesaṃ dhammarājūnaṃ,",
"bv28:22.2": "Aññesaṃnekakoṭinaṃ;",
"bv28:22.3": "Ācikkhitvāna taṃ maggaṃ,",
"bv28:22.4": "Nibbutā te sasāvakāti. #1052",
"bv28:23.1": "Buddhapakiṇṇakakaṇḍaṃ niṭṭhitaṃ."
}