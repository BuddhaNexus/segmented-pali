{
"bv23:1.1": "Buddhavaṃsa",
"bv23:2.1": "23. Vessabhūbuddhavaṃsa",
"bv23:3.1": "“Tattheva maṇḍakappamhi,",
"bv23:3.2": "asamo appaṭipuggalo;",
"bv23:3.3": "Vessabhū nāma nāmena,",
"bv23:3.4": "loke uppajji nāyako.",
"bv23:4.1": "Ādittaṃ vata rāgaggi,",
"bv23:4.2": "taṇhānaṃ vijitaṃ tadā;",
"bv23:4.3": "Nāgova bandhanaṃ chetvā,",
"bv23:4.4": "patto sambodhimuttamaṃ.",
"bv23:5.1": "Dhammacakkaṃ pavattente,",
"bv23:5.2": "vessabhūlokanāyake;",
"bv23:5.3": "Asītikoṭisahassānaṃ,",
"bv23:5.4": "paṭhamābhisamayo ahu.",
"bv23:6.1": "Pakkante cārikaṃ raṭṭhe,",
"bv23:6.2": "lokajeṭṭhe narāsabhe;",
"bv23:6.3": "Sattatikoṭisahassānaṃ,",
"bv23:6.4": "dutiyābhisamayo ahu.",
"bv23:7.1": "Mahādiṭṭhiṃ vinodento,",
"bv23:7.2": "pāṭiheraṃ karoti so;",
"bv23:7.3": "Samāgatā naramarū,",
"bv23:7.4": "dasasahassī sadevake.",
"bv23:8.1": "Mahāacchariyaṃ disvā,",
"bv23:8.2": "abbhutaṃ lomahaṃsanaṃ;",
"bv23:8.3": "Devā ceva manussā ca,",
"bv23:8.4": "bujjhare saṭṭhikoṭiyo.",
"bv23:9.1": "Sannipātā tayo āsuṃ,",
"bv23:9.2": "vessabhussa mahesino;",
"bv23:9.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv23:9.4": "santacittāna tādinaṃ.",
"bv23:10.1": "Asītibhikkhusahassānaṃ,",
"bv23:10.2": "paṭhamo āsi samāgamo;",
"bv23:10.3": "Sattatibhikkhusahassānaṃ,",
"bv23:10.4": "dutiyo āsi samāgamo.",
"bv23:11.1": "Saṭṭhibhikkhusahassānaṃ,",
"bv23:11.2": "tatiyo āsi samāgamo;",
"bv23:11.3": "Jarādibhayabhītānaṃ,",
"bv23:11.4": "orasānaṃ mahesino.",
"bv23:12.1": "Ahaṃ tena samayena,",
"bv23:12.2": "sudassano nāma khattiyo;",
"bv23:12.3": "Nimantetvā mahāvīraṃ,",
"bv23:12.4": "dānaṃ datvā mahārahaṃ;",
"bv23:12.5": "Annapānena vatthena,",
"bv23:12.6": "sasaṃghaṃ jinapūjayiṃ.",
"bv23:13.1": "Tassa buddhassa asamassa,",
"bv23:13.2": "cakkaṃ vattitamuttamaṃ;",
"bv23:13.3": "Sutvāna paṇitaṃ dhammaṃ,",
"bv23:13.4": "pabbajjamabhirocayiṃ.",
"bv23:14.1": "Mahādānaṃ pavattetvā,",
"bv23:14.2": "rattindivamatandito;",
"bv23:14.3": "Pabbajjaṃ guṇasampannaṃ,",
"bv23:14.4": "pabbajiṃ jinasantike.",
"bv23:15.1": "Ācāraguṇasampanno,",
"bv23:15.2": "vattasīlasamāhito;",
"bv23:15.3": "Sabbaññutaṃ gavesanto,",
"bv23:15.4": "ramāmi jinasāsane.",
"bv23:16.1": "Saddhāpītiṃ upagantvā,",
"bv23:16.2": "buddhaṃ vandāmi sattharaṃ;",
"bv23:16.3": "Pīti uppajjati mayhaṃ,",
"bv23:16.4": "bodhiyāyeva kāraṇā.",
"bv23:17.1": "Anivattamānasaṃ ñatvā,",
"bv23:17.2": "sambuddho etadabravi;",
"bv23:17.3": "‘Ekatiṃse ito kappe,",
"bv23:17.4": "ayaṃ buddho bhavissati.",
"bv23:18.1": "Ahu kapilavhayā rammā, … pe …",
"bv23:18.4": "hessāma sammukhā imaṃ’.",
"bv23:19.1": "Tassāhaṃ vacanaṃ sutvā,",
"bv23:19.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv23:19.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv23:19.4": "dasapāramipūriyā.",
"bv23:20.1": "Anomaṃ nāma nagaraṃ,",
"bv23:20.2": "suppatīto nāma khattiyo;",
"bv23:20.3": "Mātā yasavatī nāma,",
"bv23:20.4": "vessabhussa mahesino.",
"bv23:21.1": "Cha ca vassasahassāni,",
"bv23:21.2": "Agāraṃ ajjha so vasi;",
"bv23:21.3": "Ruci suruci rativaḍḍhano,",
"bv23:21.4": "Tayo pāsādamuttamā.",
"bv23:22.1": "Anūnatiṃsasahassāni,",
"bv23:22.2": "nāriyo samalaṅkatā;",
"bv23:22.3": "Sucittā nāma sā nārī,",
"bv23:22.4": "suppabuddho nāma atrajo.",
"bv23:23.1": "Nimitte caturo disvā,",
"bv23:23.2": "sivikāyābhinikkhami;",
"bv23:23.3": "Chamāsaṃ padhānacāraṃ,",
"bv23:23.4": "acarī purisuttamo.",
"bv23:24.1": "Brahmunā yācito santo,",
"bv23:24.2": "vessabhūlokanāyako;",
"bv23:24.3": "Vatti cakkaṃ mahāvīro,",
"bv23:24.4": "aruṇārāme naruttamo.",
"bv23:25.1": "Soṇo ca uttaro ceva,",
"bv23:25.2": "ahesuṃ aggasāvakā;",
"bv23:25.3": "Upasanto nāmupaṭṭhāko,",
"bv23:25.4": "vessabhussa mahesino.",
"bv23:26.1": "Rāmā ceva samālā ca,",
"bv23:26.2": "ahesuṃ aggasāvikā;",
"bv23:26.3": "Bodhi tassa bhagavato,",
"bv23:26.4": "mahāsāloti vuccati.",
"bv23:27.1": "Sotthiko ceva rambho ca,",
"bv23:27.2": "ahesuṃ aggupaṭṭhakā;",
"bv23:27.3": "Gotamī sirimā ceva,",
"bv23:27.4": "ahesuṃ aggupaṭṭhikā.",
"bv23:28.1": "Saṭṭhiratanamubbedho,",
"bv23:28.2": "hemayūpasamūpamo;",
"bv23:28.3": "Kāyā niccharati rasmi,",
"bv23:28.4": "rattiṃva pabbate sikhī.",
"bv23:29.1": "Saṭṭhivassasahassāni,",
"bv23:29.2": "āyu tassa mahesino;",
"bv23:29.3": "Tāvatā tiṭṭhamāno so,",
"bv23:29.4": "tāresi janataṃ bahuṃ.",
"bv23:30.1": "Dhammaṃ vitthārikaṃ katvā,",
"bv23:30.2": "vibhajitvā mahājanaṃ;",
"bv23:30.3": "Dhammanāvaṃ ṭhapetvāna,",
"bv23:30.4": "nibbuto so sasāvako.",
"bv23:31.1": "Dassaneyyaṃ sabbajanaṃ,",
"bv23:31.2": "vihāraṃ iriyāpathaṃ;",
"bv23:31.3": "Sabbaṃ tamantarahitaṃ,",
"bv23:31.4": "nanu rittā sabbasaṅkhārā.",
"bv23:32.1": "Vessabhū jinavaro satthā,",
"bv23:32.2": "Khemārāmamhi nibbuto;",
"bv23:32.3": "Dhātuvitthārikaṃ āsi,",
"bv23:32.4": "Tesu tesu padesato”ti. #901",
"bv23:33.1": "Vessabhussa bhagavato vaṃso ekavīsatimo."
}