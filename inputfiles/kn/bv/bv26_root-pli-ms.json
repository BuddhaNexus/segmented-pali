{
"bv26:1.1": "Buddhavaṃsa",
"bv26:2.1": "26. Kassapabuddhavaṃsa",
"bv26:3.1": "“Koṇāgamanassa aparena,",
"bv26:3.2": "Sambuddho dvipaduttamo;",
"bv26:3.3": "Kassapo nāma gottena,",
"bv26:3.4": "Dhammarājā pabhaṅkaro.",
"bv26:4.1": "Sañchaḍḍitaṃ kulamūlaṃ,",
"bv26:4.2": "bahvannapānabhojanaṃ;",
"bv26:4.3": "Datvāna yācake dānaṃ,",
"bv26:4.4": "pūrayitvāna mānasaṃ;",
"bv26:4.5": "Usabhova āḷakaṃ bhetvā,",
"bv26:4.6": "patto sambodhimuttamaṃ.",
"bv26:5.1": "Dhammacakkaṃ pavattente,",
"bv26:5.2": "kassape lokanāyake;",
"bv26:5.3": "Vīsakoṭisahassānaṃ,",
"bv26:5.4": "paṭhamābhisamayo ahu.",
"bv26:6.1": "Catumāsaṃ yadā buddho,",
"bv26:6.2": "loke carati cārikaṃ;",
"bv26:6.3": "Dasakoṭisahassānaṃ,",
"bv26:6.4": "dutiyābhisamayo ahu.",
"bv26:7.1": "Yamakaṃ vikubbanaṃ katvā,",
"bv26:7.2": "ñāṇadhātuṃ pakittayi;",
"bv26:7.3": "Pañcakoṭisahassānaṃ,",
"bv26:7.4": "tatiyābhisamayo ahu.",
"bv26:8.1": "Sudhammā devapure ramme,",
"bv26:8.2": "tattha dhammaṃ pakittayi;",
"bv26:8.3": "Tīṇikoṭisahassānaṃ,",
"bv26:8.4": "devānaṃ bodhayī jino.",
"bv26:9.1": "Naradevassa yakkhassa,",
"bv26:9.2": "apare dhammadesane;",
"bv26:9.3": "Etesānaṃ abhisamayā,",
"bv26:9.4": "gaṇanāto asaṅkhiyā.",
"bv26:10.1": "Tassāpi devadevassa,",
"bv26:10.2": "eko āsi samāgamo;",
"bv26:10.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv26:10.4": "santacittāna tādinaṃ.",
"bv26:11.1": "Vīsabhikkhusahassānaṃ,",
"bv26:11.2": "tadā āsi samāgamo;",
"bv26:11.3": "Atikkantabhavantānaṃ,",
"bv26:11.4": "hirisīlena tādinaṃ.",
"bv26:12.1": "Ahaṃ tadā māṇavako,",
"bv26:12.2": "jotipāloti vissuto;",
"bv26:12.3": "Ajjhāyako mantadharo,",
"bv26:12.4": "tiṇṇaṃ vedāna pāragū.",
"bv26:13.1": "Lakkhaṇe itihāse ca,",
"bv26:13.2": "sadhamme pāramiṃ gato;",
"bv26:13.3": "Bhūmantalikkhakusalo,",
"bv26:13.4": "katavijjo anāvayo.",
"bv26:14.1": "Kassapassa bhagavato,",
"bv26:14.2": "ghaṭīkāro nāmupaṭṭhāko;",
"bv26:14.3": "Sagāravo sappatisso,",
"bv26:14.4": "nibbuto tatiye phale.",
"bv26:15.1": "Ādāya maṃ ghaṭīkāro,",
"bv26:15.2": "upagañchi kassapaṃ jinaṃ;",
"bv26:15.3": "Tassa dhammaṃ suṇitvāna,",
"bv26:15.4": "pabbajiṃ tassa santike.",
"bv26:16.1": "Āraddhavīriyo hutvā,",
"bv26:16.2": "vattāvattesu kovido;",
"bv26:16.3": "Na kvaci parihāyāmi,",
"bv26:16.4": "pūresiṃ jinasāsanaṃ.",
"bv26:17.1": "Yāvatā buddhabhaṇitaṃ,",
"bv26:17.2": "navaṅgaṃ jinasāsanaṃ;",
"bv26:17.3": "Sabbaṃ pariyāpuṇitvāna,",
"bv26:17.4": "sobhayiṃ jinasāsanaṃ.",
"bv26:18.1": "Mama acchariyaṃ disvā,",
"bv26:18.2": "sopi buddho viyākari;",
"bv26:18.3": "‘Imamhi bhaddake kappe,",
"bv26:18.4": "ayaṃ buddho bhavissati.",
"bv26:19.1": "Ahu kapilavhayā rammā,",
"bv26:19.2": "nikkhamitvā tathāgato;",
"bv26:19.3": "Padhānaṃ padahitvāna,",
"bv26:19.4": "katvā dukkarakārikaṃ.",
"bv26:20.1": "Ajapālarukkhamūle,",
"bv26:20.2": "nisīditvā tathāgato;",
"bv26:20.3": "Tattha pāyāsaṃ paggayha,",
"bv26:20.4": "nerañjaramupehiti.",
"bv26:21.1": "Nerañjarāya tīramhi,",
"bv26:21.2": "pāyāsaṃ paribhuñjiya;",
"bv26:21.3": "Paṭiyattavaramaggena,",
"bv26:21.4": "bodhimūlamupehiti.",
"bv26:22.1": "Tato padakkhiṇaṃ katvā,",
"bv26:22.2": "bodhimaṇḍaṃ anuttaro;",
"bv26:22.3": "Aparājitaṭṭhānamhi,",
"bv26:22.4": "bodhipallaṅkamuttame;",
"bv26:22.5": "Pallaṅkena nisīditvā,",
"bv26:22.6": "bujjhissati mahāyaso.",
"bv26:23.1": "Imassa janikā mātā,",
"bv26:23.2": "māyā nāma bhavissati;",
"bv26:23.3": "Pitā suddhodano nāma,",
"bv26:23.4": "ayaṃ hessati gotamo.",
"bv26:24.1": "Anāsavā vītarāgā,",
"bv26:24.2": "santacittā samāhitā;",
"bv26:24.3": "Kolito upatisso ca,",
"bv26:24.4": "aggā hessanti sāvakā;",
"bv26:24.5": "Ānando nāmupaṭṭhāko,",
"bv26:24.6": "upaṭṭhissatimaṃ jinaṃ.",
"bv26:25.1": "Khemā uppalavaṇṇā ca,",
"bv26:25.2": "aggā hessanti sāvikā;",
"bv26:25.3": "Anāsavā santacittā,",
"bv26:25.4": "vītarāgā samāhitā;",
"bv26:25.5": "Bodhi tassa bhagavato,",
"bv26:25.6": "assatthoti pavuccati.",
"bv26:26.1": "Citto hatthāḷavako ca,",
"bv26:26.2": "aggā hessantupaṭṭhakā;",
"bv26:26.3": "Nandamātā ca uttarā,",
"bv26:26.4": "aggā hessantupaṭṭhikā’.",
"bv26:27.1": "Idaṃ sutvāna vacanaṃ,",
"bv26:27.2": "assamassa mahesino;",
"bv26:27.3": "Āmoditā naramarū,",
"bv26:27.4": "buddhabījaṃ kira ayaṃ.",
"bv26:28.1": "Ukkuṭṭhisaddā pavattanti,",
"bv26:28.2": "apphoṭenti hasanti ca;",
"bv26:28.3": "Katañjalī namassanti,",
"bv26:28.4": "dasasahassī sadevakā.",
"bv26:29.1": "‘Yadimassa lokanāthassa,",
"bv26:29.2": "virajjhissāma sāsanaṃ;",
"bv26:29.3": "Anāgatamhi addhāne,",
"bv26:29.4": "hessāma sammukhā imaṃ.",
"bv26:30.1": "Yathā manussā nadiṃ tarantā,",
"bv26:30.2": "Paṭititthaṃ virajjhiya;",
"bv26:30.3": "Heṭṭhā titthe gahetvāna,",
"bv26:30.4": "Uttaranti mahānadiṃ.",
"bv26:31.1": "Evamevaṃ mayaṃ sabbe,",
"bv26:31.2": "yadi muñcāmimaṃ jinaṃ;",
"bv26:31.3": "Anāgatamhi addhāne,",
"bv26:31.4": "hessāma sammukhā imaṃ’.",
"bv26:32.1": "Tassāpi vacanaṃ sutvā,",
"bv26:32.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv26:32.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv26:32.4": "dasapāramipūriyā.",
"bv26:33.1": "Evamahaṃ saṃsaritvā,",
"bv26:33.2": "parivajjento anācaraṃ;",
"bv26:33.3": "Dukkarañca kataṃ mayhaṃ,",
"bv26:33.4": "bodhiyāyeva kāraṇā.",
"bv26:34.1": "Nagaraṃ bārāṇasī nāma,",
"bv26:34.2": "kikī nāmāsi khattiyo;",
"bv26:34.3": "Vasate tattha nagare,",
"bv26:34.4": "sambuddhassa mahākulaṃ.",
"bv26:35.1": "Brāhmaṇo brahmadattova,",
"bv26:35.2": "āsi buddhassa so pitā;",
"bv26:35.3": "Dhanavatī nāma janikā,",
"bv26:35.4": "kassapassa mahesino.",
"bv26:36.1": "Duve vassasahassāni,",
"bv26:36.2": "agāraṃ ajjha so vasi;",
"bv26:36.3": "Haṃso yaso sirinando,",
"bv26:36.4": "tayo pāsādamuttamā.",
"bv26:37.1": "Tisoḷasasahassāni,",
"bv26:37.2": "Nāriyo samalaṅkatā;",
"bv26:37.3": "Sunandā nāma sā nārī,",
"bv26:37.4": "Vijitaseno nāma atrajo.",
"bv26:38.1": "Nimitte caturo disvā,",
"bv26:38.2": "pāsādenābhinikkhami;",
"bv26:38.3": "Sattāhaṃ padhānacāraṃ,",
"bv26:38.4": "acarī purisuttamo.",
"bv26:39.1": "Brahmunā yācito santo,",
"bv26:39.2": "kassapo lokanāyako;",
"bv26:39.3": "Vatti cakkaṃ mahāvīro,",
"bv26:39.4": "migadāye naruttamo.",
"bv26:40.1": "Tisso ca bhāradvājo ca,",
"bv26:40.2": "ahesuṃ aggasāvakā;",
"bv26:40.3": "Sabbamitto nāmupaṭṭhāko,",
"bv26:40.4": "kassapassa mahesino.",
"bv26:41.1": "Anuḷā uruvelā ca,",
"bv26:41.2": "ahesuṃ aggasāvikā;",
"bv26:41.3": "Bodhi tassa bhagavato,",
"bv26:41.4": "nigrodhoti pavuccati.",
"bv26:42.1": "Sumaṅgalo ghaṭikāro ca,",
"bv26:42.2": "ahesuṃ aggupaṭṭhakā;",
"bv26:42.3": "Vicitasenā bhaddā ca,",
"bv26:42.4": "ahesuṃ aggupaṭṭhikā.",
"bv26:43.1": "Uccattanena so buddho,",
"bv26:43.2": "vīsatiratanuggato;",
"bv26:43.3": "Vijjulaṭṭhīva ākāse,",
"bv26:43.4": "candova gahapūrito.",
"bv26:44.1": "Vīsativassasahassāni,",
"bv26:44.2": "āyu tassa mahesino;",
"bv26:44.3": "Tāvatā tiṭṭhamāno so,",
"bv26:44.4": "tāresi janataṃ bahuṃ.",
"bv26:45.1": "Dhammataḷākaṃ māpayitvā,",
"bv26:45.2": "sīlaṃ datvā vilepanaṃ;",
"bv26:45.3": "Dhammadussaṃ nivāsetvā,",
"bv26:45.4": "dhammamālaṃ vibhajjiya.",
"bv26:46.1": "Dhammavimalamādāsaṃ,",
"bv26:46.2": "ṭhapayitvā mahājane;",
"bv26:46.3": "Keci nibbānaṃ patthentā,",
"bv26:46.4": "passantu me alaṅkaraṃ.",
"bv26:47.1": "Sīlakañcukaṃ datvāna,",
"bv26:47.2": "jhānakavacavammitaṃ;",
"bv26:47.3": "Dhammacammaṃ pārupitvā,",
"bv26:47.4": "datvā sannāhamuttamaṃ.",
"bv26:48.1": "Satiphalakaṃ datvāna,",
"bv26:48.2": "tikhiṇañāṇakuntimaṃ;",
"bv26:48.3": "Dhammakhaggavaraṃ datvā,",
"bv26:48.4": "sīlasaṃsaggamaddanaṃ.",
"bv26:49.1": "Tevijjābhūsanaṃ datvāna,",
"bv26:49.2": "āveḷaṃ caturo phale;",
"bv26:49.3": "Chaḷabhiññābharaṇaṃ datvā,",
"bv26:49.4": "dhammapupphapiḷandhanaṃ.",
"bv26:50.1": "Saddhammapaṇḍaracchattaṃ,",
"bv26:50.2": "datvā pāpanivāraṇaṃ;",
"bv26:50.3": "Māpayitvābhayaṃ pupphaṃ,",
"bv26:50.4": "nibbuto so sasāvako.",
"bv26:51.1": "Eso hi sammāsambuddho,",
"bv26:51.2": "appameyyo durāsado;",
"bv26:51.3": "Eso hi dhammaratano,",
"bv26:51.4": "svākkhāto ehipassiko.",
"bv26:52.1": "Eso hi saṃgharatano,",
"bv26:52.2": "suppaṭipanno anuttaro;",
"bv26:52.3": "Sabbaṃ tamantarahitaṃ,",
"bv26:52.4": "nanu rittā sabbasaṅkhārā.",
"bv26:53.1": "Mahākassapo jino satthā,",
"bv26:53.2": "Setabyārāmamhi nibbuto;",
"bv26:53.3": "Tatthevassa jinathūpo,",
"bv26:53.4": "Yojanubbedhamuggato”ti. #1008",
"bv26:54.1": "Kassapassa bhagavato vaṃso catuvīsatimo."
}