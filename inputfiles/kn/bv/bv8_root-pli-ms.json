{
"bv8:1.1": "Buddhavaṃsa",
"bv8:2.1": "8. Sobhitabuddhavaṃsa",
"bv8:3.1": "“Revatassa aparena,",
"bv8:3.2": "sobhito nāma nāyako;",
"bv8:3.3": "Samāhito santacitto,",
"bv8:3.4": "asamo appaṭipuggalo.",
"bv8:4.1": "So jino sakagehamhi,",
"bv8:4.2": "mānasaṃ vinivattayi;",
"bv8:4.3": "Patvāna kevalaṃ bodhiṃ,",
"bv8:4.4": "dhammacakkaṃ pavattayi.",
"bv8:5.1": "Yāva heṭṭhā avīcito,",
"bv8:5.2": "bhavaggā cāpi uddhato;",
"bv8:5.3": "Etthantare ekaparisā,",
"bv8:5.4": "ahosi dhammadesane.",
"bv8:6.1": "Tāya parisāya sambuddho,",
"bv8:6.2": "dhammacakkaṃ pavattayi;",
"bv8:6.3": "Gaṇanāya na vattabbo,",
"bv8:6.4": "paṭhamābhisamayo ahu.",
"bv8:7.1": "Tato parampi desente,",
"bv8:7.2": "marūnañca samāgame;",
"bv8:7.3": "Navutikoṭisahassānaṃ,",
"bv8:7.4": "dutiyābhisamayo ahu.",
"bv8:8.1": "Punāparaṃ rājaputto,",
"bv8:8.2": "jayaseno nāma khattiyo;",
"bv8:8.3": "Ārāmaṃ ropayitvāna,",
"bv8:8.4": "buddhe niyyādayī tadā.",
"bv8:9.1": "Tassa yāgaṃ pakittento,",
"bv8:9.2": "dhammaṃ desesi cakkhumā;",
"bv8:9.3": "Tadā koṭisahassānaṃ,",
"bv8:9.4": "tatiyābhisamayo ahu.",
"bv8:10.1": "Sannipātā tayo āsuṃ,",
"bv8:10.2": "sobhitassa mahesino;",
"bv8:10.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv8:10.4": "santacittāna tādinaṃ.",
"bv8:11.1": "Uggato nāma so rājā,",
"bv8:11.2": "dānaṃ deti naruttame;",
"bv8:11.3": "Tamhi dāne samāgañchuṃ,",
"bv8:11.4": "arahantā satakoṭiyo.",
"bv8:12.1": "Punāparaṃ puragaṇo,",
"bv8:12.2": "deti dānaṃ naruttame;",
"bv8:12.3": "Tadā navutikoṭīnaṃ,",
"bv8:12.4": "dutiyo āsi samāgamo.",
"bv8:13.1": "Devaloke vasitvāna,",
"bv8:13.2": "yadā orohatī jino;",
"bv8:13.3": "Tadā asītikoṭīnaṃ,",
"bv8:13.4": "tatiyo āsi samāgamo.",
"bv8:14.1": "Ahaṃ tena samayena,",
"bv8:14.2": "sujāto nāma brāhmaṇo;",
"bv8:14.3": "Tadā sasāvakaṃ buddhaṃ,",
"bv8:14.4": "annapānena tappayiṃ.",
"bv8:15.1": "Sopi maṃ buddho byākāsi,",
"bv8:15.2": "sobhito lokanāyako;",
"bv8:15.3": "‘Aparimeyyito kappe,",
"bv8:15.4": "ayaṃ buddho bhavissati.",
"bv8:16.1": "Padhānaṃ padahitvāna, … pe …",
"bv8:16.4": "hessāma sammukhā imaṃ’.",
"bv8:17.1": "Tassāpi vacanaṃ sutvā,",
"bv8:17.2": "haṭṭho saṃviggamānaso;",
"bv8:17.3": "Tamevatthamanuppattiyā,",
"bv8:17.4": "uggaṃ dhitimakāsahaṃ.",
"bv8:18.1": "Sudhammaṃ nāma nagaraṃ,",
"bv8:18.2": "sudhammo nāma khattiyo;",
"bv8:18.3": "Sudhammā nāma janikā,",
"bv8:18.4": "sobhitassa mahesino.",
"bv8:19.1": "Navavassasahassāni,",
"bv8:19.2": "agāraṃ ajjha so vasi;",
"bv8:19.3": "Kumudo nāḷino padumo,",
"bv8:19.4": "tayo pāsādamuttamā.",
"bv8:20.1": "Sattatiṃsasahassāni,",
"bv8:20.2": "nāriyo samalaṅkatā;",
"bv8:20.3": "Maṇilā nāma sā nārī,",
"bv8:20.4": "sīho nāmāsi atrajo.",
"bv8:21.1": "Nimitte caturo disvā,",
"bv8:21.2": "pāsādenābhinikkhami;",
"bv8:21.3": "Sattāhaṃ padhānacāraṃ,",
"bv8:21.4": "caritvā purisuttamo.",
"bv8:22.1": "Brahmunā yācito santo,",
"bv8:22.2": "sobhito lokanāyako;",
"bv8:22.3": "Vatti cakkaṃ mahāvīro,",
"bv8:22.4": "sudhammuyyānamuttame.",
"bv8:23.1": "Asamo ca sunetto ca,",
"bv8:23.2": "ahesuṃ aggasāvakā;",
"bv8:23.3": "Anomo nāmupaṭṭhāko,",
"bv8:23.4": "sobhitassa mahesino.",
"bv8:24.1": "Nakulā ca sujātā ca,",
"bv8:24.2": "ahesuṃ aggasāvikā;",
"bv8:24.3": "Bujjhamāno ca so buddho,",
"bv8:24.4": "nāgamūle abujjhatha.",
"bv8:25.1": "Rammo ceva sudatto ca,",
"bv8:25.2": "ahesuṃ aggupaṭṭhakā;",
"bv8:25.3": "Nakulā ceva cittā ca,",
"bv8:25.4": "ahesuṃ aggupaṭṭhikā.",
"bv8:26.1": "Aṭṭhapaṇṇāsaratanaṃ,",
"bv8:26.2": "accuggato mahāmuni;",
"bv8:26.3": "Obhāseti disā sabbā,",
"bv8:26.4": "sataraṃsīva uggato.",
"bv8:27.1": "Yathā suphullaṃ pavanaṃ,",
"bv8:27.2": "nānāgandhehi dhūpitaṃ;",
"bv8:27.3": "Tatheva tassa pāvacanaṃ,",
"bv8:27.4": "sīlagandhehi dhūpitaṃ.",
"bv8:28.1": "Yathāpi sāgaro nāma,",
"bv8:28.2": "dassanena atappiyo;",
"bv8:28.3": "Tatheva tassa pāvacanaṃ,",
"bv8:28.4": "savanena atappiyaṃ.",
"bv8:29.1": "Navutivassasahassāni,",
"bv8:29.2": "āyu vijjati tāvade;",
"bv8:29.3": "Tāvatā tiṭṭhamāno so,",
"bv8:29.4": "tāresi janataṃ bahuṃ.",
"bv8:30.1": "Ovādaṃ anusiṭṭhiñca,",
"bv8:30.2": "datvāna sesake jane;",
"bv8:30.3": "Hutāsanova tāpetvā,",
"bv8:30.4": "nibbuto so sasāvako.",
"bv8:31.1": "So ca buddho asamasamo,",
"bv8:31.2": "tepi sāvakā balappattā;",
"bv8:31.3": "Sabbaṃ tamantarahitaṃ,",
"bv8:31.4": "nanu rittā sabbasaṅkhārā.",
"bv8:32.1": "Sobhito varasambuddho,",
"bv8:32.2": "Sīhārāmamhi nibbuto;",
"bv8:32.3": "Dhātuvitthārikaṃ āsi,",
"bv8:32.4": "Tesu tesu padesato”ti. #462",
"bv8:33.1": "Sobhitassa bhagavato vaṃso chaṭṭho."
}