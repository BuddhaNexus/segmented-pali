{
"bv15:1.1": "Buddhavaṃsa",
"bv15:2.1": "15 Piyadassībuddhavaṃsa",
"bv15:3.1": "“Sujātassa aparena,",
"bv15:3.2": "sayambhū lokanāyako;",
"bv15:3.3": "Durāsado asamasamo,",
"bv15:3.4": "piyadassī mahāyaso.",
"bv15:4.1": "Sopi buddho amitayaso,",
"bv15:4.2": "ādiccova virocati;",
"bv15:4.3": "Sabbaṃ tamaṃ nihantvāna,",
"bv15:4.4": "dhammacakkaṃ pavattayi.",
"bv15:5.1": "Tassāpi atulatejassa,",
"bv15:5.2": "Ahesuṃ abhisamayā tayo;",
"bv15:5.3": "Koṭisatasahassānaṃ,",
"bv15:5.4": "Paṭhamābhisamayo ahu.",
"bv15:6.1": "Sudassano devarājā,",
"bv15:6.2": "micchādiṭṭhimarocayi;",
"bv15:6.3": "Tassa diṭṭhiṃ vinodento,",
"bv15:6.4": "satthā dhammamadesayi.",
"bv15:7.1": "Janasannipāto atulo,",
"bv15:7.2": "mahāsannipatī tadā;",
"bv15:7.3": "Navutikoṭisahassānaṃ,",
"bv15:7.4": "dutiyābhisamayo ahu.",
"bv15:8.1": "Yadā doṇamukhaṃ hatthiṃ,",
"bv15:8.2": "vinesi narasārathi;",
"bv15:8.3": "Asītikoṭisahassānaṃ,",
"bv15:8.4": "tatiyābhisamayo ahu.",
"bv15:9.1": "Sannipātā tayo āsuṃ,",
"bv15:9.2": "tassāpi piyadassino;",
"bv15:9.3": "Koṭisatasahassānaṃ,",
"bv15:9.4": "paṭhamo āsi samāgamo.",
"bv15:10.1": "Tato paraṃ navutikoṭī,",
"bv15:10.2": "samiṃsu ekato munī;",
"bv15:10.3": "Tatiye sannipātamhi,",
"bv15:10.4": "asītikoṭiyo ahū.",
"bv15:11.1": "Ahaṃ tena samayena,",
"bv15:11.2": "kassapo nāma brāhmaṇo;",
"bv15:11.3": "Ajjhāyako mantadharo,",
"bv15:11.4": "tiṇṇaṃ vedāna pāragū.",
"bv15:12.1": "Tassa dhammaṃ suṇitvāna,",
"bv15:12.2": "pasādaṃ janayiṃ ahaṃ;",
"bv15:12.3": "Koṭisatasahassehi,",
"bv15:12.4": "saṃghārāmaṃ amāpayiṃ.",
"bv15:13.1": "Tassa datvāna ārāmaṃ,",
"bv15:13.2": "haṭṭho saṃviggamānaso;",
"bv15:13.3": "Saraṇe pañca sīle ca,",
"bv15:13.4": "daḷhaṃ katvā samādiyiṃ.",
"bv15:14.1": "Sopi maṃ buddho byākāsi,",
"bv15:14.2": "saṃghamajjhe nisīdiya;",
"bv15:14.3": "‘Aṭṭhārase kappasate,",
"bv15:14.4": "ayaṃ buddho bhavissati.",
"bv15:15.1": "Padhānaṃ padahitvāna, … pe …",
"bv15:15.4": "hessāma sammukhā imaṃ’.",
"bv15:16.1": "Tassāpi vacanaṃ sutvā,",
"bv15:16.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv15:16.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv15:16.4": "dasapāramipūriyā.",
"bv15:17.1": "Sudhaññaṃ nāma nagaraṃ,",
"bv15:17.2": "sudatto nāma khattiyo;",
"bv15:17.3": "Candā nāmāsi janikā,",
"bv15:17.4": "piyadassissa satthuno.",
"bv15:18.1": "Navavassasahassāni,",
"bv15:18.2": "Agāraṃ ajjha so vasi;",
"bv15:18.3": "Sunimmalavimalagiriguhā,",
"bv15:18.4": "Tayo pāsādamuttamā.",
"bv15:19.1": "Tettiṃsasahassāni ca,",
"bv15:19.2": "Nāriyo samalaṅkatā;",
"bv15:19.3": "Vimalā nāma nārī ca,",
"bv15:19.4": "Kañcanāveḷo nāma atrajo.",
"bv15:20.1": "Nimitte caturo disvā,",
"bv15:20.2": "rathayānena nikkhami;",
"bv15:20.3": "Chamāsaṃ padhānacāraṃ,",
"bv15:20.4": "acarī purisuttamo.",
"bv15:21.1": "Brahmunā yācito santo,",
"bv15:21.2": "piyadassī mahāmuni;",
"bv15:21.3": "Vatti cakkaṃ mahāvīro,",
"bv15:21.4": "usabhuyyāne manorame.",
"bv15:22.1": "Pālito sabbadassī ca,",
"bv15:22.2": "ahesuṃ aggasāvakā;",
"bv15:22.3": "Sobhito nāmupaṭṭhāko,",
"bv15:22.4": "piyadassissa satthuno.",
"bv15:23.1": "Sujātā dhammadinnā ca,",
"bv15:23.2": "ahesuṃ aggasāvikā;",
"bv15:23.3": "Bodhi tassa bhagavato,",
"bv15:23.4": "kakudhoti pavuccati.",
"bv15:24.1": "Sandhako dhammako ceva,",
"bv15:24.2": "ahesuṃ aggupaṭṭhakā;",
"bv15:24.3": "Visākhā dhammadinnā ca,",
"bv15:24.4": "ahesuṃ aggupaṭṭhikā.",
"bv15:25.1": "Sopi buddho amitayaso,",
"bv15:25.2": "dvattiṃsavaralakkhaṇo;",
"bv15:25.3": "Asītihatthamubbedho,",
"bv15:25.4": "sālarājāva dissati.",
"bv15:26.1": "Aggicandasūriyānaṃ,",
"bv15:26.2": "natthi tādisikā pabhā;",
"bv15:26.3": "Yathā ahu pabhā tassa,",
"bv15:26.4": "asamassa mahesino.",
"bv15:27.1": "Tassāpi devadevassa,",
"bv15:27.2": "āyu tāvatakaṃ ahu;",
"bv15:27.3": "Navutivassasahassāni,",
"bv15:27.4": "loke aṭṭhāsi cakkhumā.",
"bv15:28.1": "Sopi buddho asamasamo,",
"bv15:28.2": "Yugānipi tāni atuliyāni;",
"bv15:28.3": "Sabbaṃ tamantarahitaṃ,",
"bv15:28.4": "Nanu rittā sabbasaṅkhārā.",
"bv15:29.1": "Piyadassī munivaro,",
"bv15:29.2": "Assatthārāmamhi nibbuto;",
"bv15:29.3": "Tatthevassa jinathūpo,",
"bv15:29.4": "Tīṇiyojanamuggato”ti. #678",
"bv15:30.1": "Piyadassissa bhagavato vaṃso terasamo."
}