{
"bv7:1.1": "Buddhavaṃsa",
"bv7:2.1": "7. Revatabuddhavaṃsa",
"bv7:3.1": "Sumanassa aparena,",
"bv7:3.2": "revato nāma nāyako;",
"bv7:3.3": "Anūpamo asadiso,",
"bv7:3.4": "atulo uttamo jino.",
"bv7:4.1": "Sopi dhammaṃ pakāsesi,",
"bv7:4.2": "brahmunā abhiyācito;",
"bv7:4.3": "Khandhadhātuvavatthānaṃ,",
"bv7:4.4": "appavattaṃ bhavābhave.",
"bv7:5.1": "Tassābhisamayā tīṇi,",
"bv7:5.2": "ahesuṃ dhammadesane;",
"bv7:5.3": "Gaṇanāya na vattabbo,",
"bv7:5.4": "paṭhamābhisamayo ahu.",
"bv7:6.1": "Yadā arindamaṃ rājaṃ,",
"bv7:6.2": "vinesi revato muni;",
"bv7:6.3": "Tadā koṭisahassānaṃ,",
"bv7:6.4": "dutiyābhisamayo ahu.",
"bv7:7.1": "Sattāhaṃ paṭisallānā,",
"bv7:7.2": "vuṭṭhahitvā narāsabho;",
"bv7:7.3": "Koṭisataṃ naramarūnaṃ,",
"bv7:7.4": "vinesi uttame phale.",
"bv7:8.1": "Sannipātā tayo āsuṃ,",
"bv7:8.2": "revatassa mahesino;",
"bv7:8.3": "Khīṇāsavānaṃ vimalānaṃ,",
"bv7:8.4": "suvimuttāna tādinaṃ.",
"bv7:9.1": "Atikkantā gaṇanapathaṃ,",
"bv7:9.2": "paṭhamaṃ ye samāgatā;",
"bv7:9.3": "Koṭisatasahassānaṃ,",
"bv7:9.4": "dutiyo āsi samāgamo.",
"bv7:10.1": "Yopi paññāya asamo,",
"bv7:10.2": "tassa cakkānuvattako;",
"bv7:10.3": "So tadā byādhito āsi,",
"bv7:10.4": "patto jīvitasaṃsayaṃ.",
"bv7:11.1": "Tassa gilānapucchāya,",
"bv7:11.2": "ye tadā upagatā munī;",
"bv7:11.3": "Koṭisahassā arahanto,",
"bv7:11.4": "tatiyo āsi samāgamo.",
"bv7:12.1": "Ahaṃ tena samayena,",
"bv7:12.2": "atidevo nāma brāhmaṇo;",
"bv7:12.3": "Upagantvā revataṃ buddhaṃ,",
"bv7:12.4": "saraṇaṃ tassa gañchahaṃ.",
"bv7:13.1": "Tassa sīlaṃ samādhiñca,",
"bv7:13.2": "paññāguṇamanuttamaṃ;",
"bv7:13.3": "Thomayitvā yathāthāmaṃ,",
"bv7:13.4": "uttarīyamadāsahaṃ.",
"bv7:14.1": "Sopi maṃ buddho byākāsi,",
"bv7:14.2": "revato lokanāyako;",
"bv7:14.3": "“Aparimeyyito kappe,",
"bv7:14.4": "ayaṃ buddho bhavissati.",
"bv7:15.1": "‘Padhānaṃ padahitvāna, … pe …",
"bv7:15.4": "hessāma sammukhā imaṃ’.",
"bv7:16.1": "Tassāpi vacanaṃ sutvā,",
"bv7:16.2": "bhiyyo cittaṃ pasādayiṃ;",
"bv7:16.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
"bv7:16.4": "dasapāramipūriyā.",
"bv7:17.1": "Tadāpi taṃ buddhadhammaṃ,",
"bv7:17.2": "saritvā anubrūhayiṃ;",
"bv7:17.3": "Āharissāmi taṃ dhammaṃ,",
"bv7:17.4": "yaṃ mayhaṃ abhipatthitaṃ.",
"bv7:18.1": "Nagaraṃ sudhaññavatī nāma,",
"bv7:18.2": "Vipulo nāma khattiyo;",
"bv7:18.3": "Vipulā nāma janikā,",
"bv7:18.4": "Revatassa mahesino.",
"bv7:19.1": "Cha ca vassasahassāni,",
"bv7:19.2": "agāraṃ ajjha so vasi;",
"bv7:19.3": "Sudassano ratanagghi,",
"bv7:19.4": "āveḷo ca vibhūsito;",
"bv7:19.5": "Puññakammābhinibbattā,",
"bv7:19.6": "tayo pāsādamuttamā.",
"bv7:20.1": "Tettiṃsa ca sahassāni,",
"bv7:20.2": "nāriyo samalaṅkatā;",
"bv7:20.3": "Sudassanā nāma nārī,",
"bv7:20.4": "varuṇo nāma atrajo.",
"bv7:21.1": "Nimitte caturo disvā,",
"bv7:21.2": "rathayānena nikkhami;",
"bv7:21.3": "Anūnasattamāsāni,",
"bv7:21.4": "padhānaṃ padahī jino.",
"bv7:22.1": "Brahmunā yācito santo,",
"bv7:22.2": "revato lokanāyako;",
"bv7:22.3": "Vatti cakkaṃ mahāvīro,",
"bv7:22.4": "varuṇārāme sirīghare.",
"bv7:23.1": "Varuṇo brahmadevo ca,",
"bv7:23.2": "ahesuṃ aggasāvakā;",
"bv7:23.3": "Sambhavo nāmupaṭṭhāko,",
"bv7:23.4": "revatassa mahesino.",
"bv7:24.1": "Bhaddā ceva subhaddā ca,",
"bv7:24.2": "ahesuṃ aggasāvikā;",
"bv7:24.3": "Sopi buddho asamasamo,",
"bv7:24.4": "nāgamūle abujjhatha.",
"bv7:25.1": "Padumo kuñjaro ceva,",
"bv7:25.2": "ahesuṃ aggupaṭṭhakā;",
"bv7:25.3": "Sirīmā ceva yasavatī,",
"bv7:25.4": "ahesuṃ aggupaṭṭhikā.",
"bv7:26.1": "Uccattanena so buddho,",
"bv7:26.2": "asītihatthamuggato;",
"bv7:26.3": "Obhāseti disā sabbā,",
"bv7:26.4": "indaketuva uggato.",
"bv7:27.1": "Tassa sarīre nibbattā,",
"bv7:27.2": "pabhāmālā anuttarā;",
"bv7:27.3": "Divā vā yadi vā rattiṃ,",
"bv7:27.4": "samantā pharati yojanaṃ.",
"bv7:28.1": "Saṭṭhivassasahassāni,",
"bv7:28.2": "āyu vijjati tāvade;",
"bv7:28.3": "Tāvatā tiṭṭhamāno so,",
"bv7:28.4": "tāresi janataṃ bahuṃ.",
"bv7:29.1": "Dassayitvā buddhabalaṃ,",
"bv7:29.2": "amataṃ loke pakāsayaṃ;",
"bv7:29.3": "Nibbāyi anupādāno,",
"bv7:29.4": "yathaggupādānasaṅkhayā.",
"bv7:30.1": "So ca kāyo ratananibho,",
"bv7:30.2": "so ca dhammo asādiso;",
"bv7:30.3": "Sabbaṃ tamantarahitaṃ,",
"bv7:30.4": "nanu rittā sabbasaṅkhārā.",
"bv7:31.1": "Revato yasadharo buddho,",
"bv7:31.2": "Nibbuto so mahāpure;",
"bv7:31.3": "Dhātuvitthārikaṃ āsi,",
"bv7:31.4": "Tesu tesu padesato”ti. #432",
"bv7:32.1": "Revatassa bhagavato vaṃso pañcamo."
}