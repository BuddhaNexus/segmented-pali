{
  "cp24:0.1": "Cariyāpiṭaka ",
  "cp24:0.2": "Yudhañjayavagga ",
  "cp24:0.3": "Nekkhammapāramī 4 ",
  "cp24:0.4": "Bhisacariya ",
  "cp24:1.1": "“Punāparaṁ yadā homi, ",
  "cp24:1.2": "kāsīnaṁ puravaruttame; ",
  "cp24:1.3": "Bhaginī ca bhātaro satta, ",
  "cp24:1.4": "nibbattā sotthiye kule. ",
  "cp24:2.1": "Etesaṁ pubbajo āsiṁ, ",
  "cp24:2.2": "hirīsukkamupāgato; ",
  "cp24:2.3": "Bhavaṁ disvāna bhayato, ",
  "cp24:2.4": "nekkhammābhirato ahaṁ. ",
  "cp24:3.1": "Mātāpitūhi pahitā, ",
  "cp24:3.2": "sahāyā ekamānasā; ",
  "cp24:3.3": "Kāmehi maṁ nimantenti, ",
  "cp24:3.4": "‘kulavaṁsaṁ dharehi’ti. ",
  "cp24:4.1": "Yaṁ tesaṁ vacanaṁ vuttaṁ, ",
  "cp24:4.2": "gihīdhamme sukhāvahaṁ; ",
  "cp24:4.3": "Taṁ me ahosi kaṭhinaṁ, ",
  "cp24:4.4": "tattaphālasamaṁ viya. ",
  "cp24:5.1": "Te maṁ tadā ukkhipantaṁ, ",
  "cp24:5.2": "pucchiṁsu patthitaṁ mama; ",
  "cp24:5.3": "‘Kiṁ tvaṁ patthayase samma, ",
  "cp24:5.4": "yadi kāme na bhuñjasi’. ",
  "cp24:6.1": "Tesāhaṁ evamavacaṁ, ",
  "cp24:6.2": "atthakāmo hitesinaṁ; ",
  "cp24:6.3": "‘Nāhaṁ patthemi gihībhāvaṁ, ",
  "cp24:6.4": "nekkhammābhirato ahaṁ’. ",
  "cp24:7.1": "Te mayhaṁ vacanaṁ sutvā, ",
  "cp24:7.2": "pitu mātu ca sāvayuṁ; ",
  "cp24:7.3": "Mātāpitā evamāhu, ",
  "cp24:7.4": "‘sabbeva pabbajāma bho’. ",
  "cp24:8.1": "Ubho mātāpitā mayhaṁ, ",
  "cp24:8.2": "bhaginī ca satta bhātaro; ",
  "cp24:8.3": "Amitadhanaṁ chaḍḍayitvā, ",
  "cp24:8.4": "pāvisimhā mahāvanan”ti. ",
  "cp24:9.1": "Bhisacariyaṁ catutthaṁ. "
}