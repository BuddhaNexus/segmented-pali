{
"cp13:1.1": "Cariyāpiṭaka",
"cp13:2.1": "Hatthināgavagga",
"cp13:3.1": "Sīlapāramī 3",
"cp13:4.1": "Campeyyanāgacariya",
"cp13:5.1": "“Punāparaṃ yadā homi,",
"cp13:5.2": "campeyyako mahiddhiko;",
"cp13:5.3": "Tadāpi dhammiko āsiṃ,",
"cp13:5.4": "sīlabbatasamappito.",
"cp13:6.1": "Tadāpi maṃ dhammacāriṃ,",
"cp13:6.2": "upavutthaṃ uposathaṃ;",
"cp13:6.3": "Ahituṇḍiko gahetvāna,",
"cp13:6.4": "rājadvāramhi kīḷati.",
"cp13:7.1": "Yaṃ yaṃ so vaṇṇaṃ cintayi,",
"cp13:7.2": "nīlaṃva pītalohitaṃ;",
"cp13:7.3": "Tassa cittānuvattanto,",
"cp13:7.4": "homi cintitasannibho.",
"cp13:8.1": "Thalaṃ kareyyamudakaṃ,",
"cp13:8.2": "udakampi thalaṃ kare;",
"cp13:8.3": "Yadihaṃ tassa pakuppeyyaṃ,",
"cp13:8.4": "khaṇena chārikaṃ kare.",
"cp13:9.1": "Yadi cittavasī hessaṃ,",
"cp13:9.2": "parihāyissāmi sīlato;",
"cp13:9.3": "Sīlena parihīnassa,",
"cp13:9.4": "uttamattho na sijjhati.",
"cp13:10.1": "Kāmaṃ bhijjatuyaṃ kāyo,",
"cp13:10.2": "idheva vikirīyatu;",
"cp13:10.3": "Neva sīlaṃ pabhindeyyaṃ,",
"cp13:10.4": "vikirante bhusaṃ viyā”ti.",
"cp13:11.1": "Campeyyanāgacariyaṃ tatiyaṃ."
}