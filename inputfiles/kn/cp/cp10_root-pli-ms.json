{
"cp10:1.1": "Cariyāpiṭaka",
"cp10:2.1": "Akittivagga",
"cp10:3.1": "Dānapāramī 10",
"cp10:4.1": "Sasapaṇḍitacariya",
"cp10:5.1": "“Punāparaṃ yadā homi,",
"cp10:5.2": "Sasako pavanacārako;",
"cp10:5.3": "Tiṇapaṇṇasākaphalabhakkho,",
"cp10:5.4": "Paraheṭhanavivajjito.",
"cp10:6.1": "Makkaṭo ca siṅgālo ca,",
"cp10:6.2": "suttapoto cahaṃ tadā;",
"cp10:6.3": "Vasāma ekasāmantā,",
"cp10:6.4": "sāyaṃ pāto ca dissare.",
"cp10:7.1": "Ahaṃ te anusāsāmi,",
"cp10:7.2": "kiriye kalyāṇapāpake;",
"cp10:7.3": "‘Pāpāni parivajjetha,",
"cp10:7.4": "kalyāṇe abhinivissatha’.",
"cp10:8.1": "Uposathamhi divase,",
"cp10:8.2": "candaṃ disvāna pūritaṃ;",
"cp10:8.3": "Etesaṃ tattha ācikkhiṃ,",
"cp10:8.4": "‘divaso ajjuposatho.",
"cp10:9.1": "Dānāni paṭiyādetha,",
"cp10:9.2": "dakkhiṇeyyassa dātave;",
"cp10:9.3": "Datvā dānaṃ dakkhiṇeyye,",
"cp10:9.4": "upavassathuposathaṃ’.",
"cp10:10.1": "Te me sādhūti vatvāna,",
"cp10:10.2": "yathāsatti yathābalaṃ;",
"cp10:10.3": "Dānāni paṭiyādetvā,",
"cp10:10.4": "dakkhiṇeyyaṃ gavesisuṃ.",
"cp10:11.1": "Ahaṃ nisajja cintesiṃ,",
"cp10:11.2": "dānaṃ dakkhiṇanucchavaṃ;",
"cp10:11.3": "‘Yadihaṃ labhe dakkhiṇeyyaṃ,",
"cp10:11.4": "kiṃ me dānaṃ bhavissati.",
"cp10:12.1": "Na me atthi tilā muggā,",
"cp10:12.2": "māsā vā taṇḍulā ghataṃ;",
"cp10:12.3": "Ahaṃ tiṇena yāpemi,",
"cp10:12.4": "na sakkā tiṇa dātave.",
"cp10:13.1": "Yadi koci eti dakkhiṇeyyo,",
"cp10:13.2": "Bhikkhāya mama santike;",
"cp10:13.3": "Dajjāhaṃ sakamattānaṃ,",
"cp10:13.4": "Na so tuccho gamissati’.",
"cp10:14.1": "Mama saṅkappamaññāya,",
"cp10:14.2": "sakko brāhmaṇavaṇṇinā;",
"cp10:14.3": "Āsayaṃ me upāgacchi,",
"cp10:14.4": "dānavīmaṃsanāya me.",
"cp10:15.1": "Tamahaṃ disvāna santuṭṭho,",
"cp10:15.2": "idaṃ vacanamabraviṃ;",
"cp10:15.3": "‘Sādhu khosi anuppatto,",
"cp10:15.4": "ghāsahetu mamantike.",
"cp10:16.1": "Adinnapubbaṃ dānavaraṃ,",
"cp10:16.2": "ajja dassāmi te ahaṃ;",
"cp10:16.3": "Tuvaṃ sīlaguṇūpeto,",
"cp10:16.4": "ayuttaṃ te paraheṭhanaṃ.",
"cp10:17.1": "Ehi aggiṃ padīpehi,",
"cp10:17.2": "nānākaṭṭhe samānaya;",
"cp10:17.3": "Ahaṃ pacissamattānaṃ,",
"cp10:17.4": "pakkaṃ tvaṃ bhakkhayissasi’.",
"cp10:18.1": "‘Sādhū’ti so haṭṭhamano,",
"cp10:18.2": "nānākaṭṭhe samānayi;",
"cp10:18.3": "Mahantaṃ akāsi citakaṃ,",
"cp10:18.4": "katvā aṅgāragabbhakaṃ.",
"cp10:19.1": "Aggiṃ tattha padīpesi,",
"cp10:19.2": "yathā so khippaṃ mahā bhave;",
"cp10:19.3": "Phoṭetvā rajagate gatte,",
"cp10:19.4": "ekamantaṃ upāvisiṃ.",
"cp10:20.1": "Yadā mahākaṭṭhapuñjo,",
"cp10:20.2": "āditto dhamadhamāyati;",
"cp10:20.3": "Taduppatitvā papatiṃ,",
"cp10:20.4": "majjhe jālasikhantare.",
"cp10:21.1": "Yathā sītodakaṃ nāma,",
"cp10:21.2": "Paviṭṭhaṃ yassa kassaci;",
"cp10:21.3": "Sameti darathapariḷāhaṃ,",
"cp10:21.4": "Assādaṃ deti pīti ca.",
"cp10:22.1": "Tatheva jalitaṃ aggiṃ,",
"cp10:22.2": "paviṭṭhassa mamaṃ tadā;",
"cp10:22.3": "Sabbaṃ sameti darathaṃ,",
"cp10:22.4": "yathā sītodakaṃ viya.",
"cp10:23.1": "Chaviṃ cammaṃ maṃsaṃ nhāruṃ,",
"cp10:23.2": "Aṭṭhiṃ hadayabandhanaṃ;",
"cp10:23.3": "Kevalaṃ sakalaṃ kāyaṃ,",
"cp10:23.4": "Brāhmaṇassa adāsahan”ti. #143",
"cp10:24.1": "Sasapaṇḍitacariyaṃ dasamaṃ.",
"cp10:25.1": "Akittivaggo paṭhamo.",
"cp10:26.1": "Tassuddānaṃ",
"cp10:27.1": "Akittibrāhmaṇo saṅkho,",
"cp10:27.2": "kururājā dhanañcayo;",
"cp10:27.3": "Mahāsudassano rājā,",
"cp10:27.4": "mahāgovindabrāhmaṇo.",
"cp10:28.1": "Nimi candakumāro ca,",
"cp10:28.2": "sivi vessantaro saso;",
"cp10:28.3": "Ahameva tadā āsiṃ,",
"cp10:28.4": "yo te dānavare adā.",
"cp10:29.1": "Ete dānaparikkhārā,",
"cp10:29.2": "ete dānassa pāramī;",
"cp10:29.3": "Jīvitaṃ yācake datvā,",
"cp10:29.4": "imaṃ pārami pūrayiṃ.",
"cp10:30.1": "Bhikkhāya upagataṃ disvā,",
"cp10:30.2": "sakattānaṃ pariccajiṃ;",
"cp10:30.3": "Dānena me samo natthi,",
"cp10:30.4": "esā me dānapāramīti.",
"cp10:31.1": "Dānapāraminiddeso niṭṭhito."
}