{
"cp19:1.1": "Cariyāpiṭaka",
"cp19:2.1": "Hatthināgavagga",
"cp19:3.1": "Sīlapāramī 9",
"cp19:4.1": "Alīnasattucariya",
"cp19:5.1": "“Pañcālaraṭṭhe nagaravare,",
"cp19:5.2": "Kapilāyaṃ puruttame;",
"cp19:5.3": "Rājā jayaddiso nāma,",
"cp19:5.4": "Sīlaguṇamupāgato.",
"cp19:6.1": "Tassa rañño ahaṃ putto,",
"cp19:6.2": "Sutadhammo susīlavā;",
"cp19:6.3": "Alīnasatto guṇavā,",
"cp19:6.4": "Anurakkhaparijano sadā.",
"cp19:7.1": "Pitā me migavaṃ gantvā,",
"cp19:7.2": "porisādaṃ upāgami;",
"cp19:7.3": "So me pitumaggahesi,",
"cp19:7.4": "‘bhakkhosi mama mā cali’.",
"cp19:8.1": "Tassa taṃ vacanaṃ sutvā,",
"cp19:8.2": "bhīto tasitavedhito;",
"cp19:8.3": "Ūrukkhambho ahu tassa,",
"cp19:8.4": "disvāna porisādakaṃ.",
"cp19:9.1": "Migavaṃ gahetvā muñcassu,",
"cp19:9.2": "katvā āgamanaṃ puna;",
"cp19:9.3": "Brāhmaṇassa dhanaṃ datvā,",
"cp19:9.4": "pitā āmantayī mamaṃ.",
"cp19:10.1": "‘Rajjaṃ putta paṭipajja,",
"cp19:10.2": "mā pamajji puraṃ idaṃ;",
"cp19:10.3": "Kataṃ me porisādena,",
"cp19:10.4": "mama āgamanaṃ puna’.",
"cp19:11.1": "Mātāpitū ca vanditvā,",
"cp19:11.2": "nimminitvāna attanā;",
"cp19:11.3": "Nikkhipitvā dhanuṃ khaggaṃ,",
"cp19:11.4": "porisādaṃ upāgamiṃ.",
"cp19:12.1": "Sasatthahatthūpagataṃ,",
"cp19:12.2": "kadāci so tasissati;",
"cp19:12.3": "Tena bhijjissati sīlaṃ,",
"cp19:12.4": "parittāsaṃ kate mayi.",
"cp19:13.1": "Sīlakhaṇḍabhayā mayhaṃ,",
"cp19:13.2": "tassa dessaṃ na byāhariṃ;",
"cp19:13.3": "Mettacitto hitavādī,",
"cp19:13.4": "idaṃ vacanamabraviṃ.",
"cp19:14.1": "‘Ujjālehi mahāaggiṃ,",
"cp19:14.2": "papatissāmi rukkhato;",
"cp19:14.3": "Tvaṃ pakkakālamaññāya,",
"cp19:14.4": "bhakkhaya maṃ pitāmaha’.",
"cp19:15.1": "Iti sīlavataṃ hetu,",
"cp19:15.2": "nārakkhiṃ mama jīvitaṃ;",
"cp19:15.3": "Pabbājesiṃ cahaṃ tassa,",
"cp19:15.4": "sadā pāṇātipātikan”ti.",
"cp19:16.1": "Alīnasattucariyaṃ navamaṃ."
}