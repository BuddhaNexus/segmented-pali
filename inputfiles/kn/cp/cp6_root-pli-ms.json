{
"cp6:1.1": "Cariyāpiṭaka",
"cp6:2.1": "Akittivagga",
"cp6:3.1": "Dānapāramī 6",
"cp6:4.1": "Nimirājacariya",
"cp6:5.1": "“Punāparaṃ yadā homi,",
"cp6:5.2": "mithilāyaṃ puruttame;",
"cp6:5.3": "Nimi nāma mahārājā,",
"cp6:5.4": "paṇḍito kusalatthiko.",
"cp6:6.1": "Tadāhaṃ māpayitvāna,",
"cp6:6.2": "catussālaṃ catummukhaṃ;",
"cp6:6.3": "Tattha dānaṃ pavattesiṃ,",
"cp6:6.4": "migapakkhinarādinaṃ.",
"cp6:7.1": "Acchādanañca sayanaṃ,",
"cp6:7.2": "annaṃ pānañca bhojanaṃ;",
"cp6:7.3": "Abbocchinnaṃ karitvāna,",
"cp6:7.4": "mahādānaṃ pavattayiṃ.",
"cp6:8.1": "Yathāpi sevako sāmiṃ,",
"cp6:8.2": "dhanahetumupāgato;",
"cp6:8.3": "Kāyena vācā manasā,",
"cp6:8.4": "ārādhanīyamesati.",
"cp6:9.1": "Tathevāhaṃ sabbabhave,",
"cp6:9.2": "pariyesissāmi bodhijaṃ;",
"cp6:9.3": "Dānena satte tappetvā,",
"cp6:9.4": "icchāmi bodhimuttaman”ti.",
"cp6:10.1": "Nimirājacariyaṃ chaṭṭhaṃ."
}