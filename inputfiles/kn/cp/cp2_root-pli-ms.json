{
"cp2:1.1": "Cariyāpiṭaka",
"cp2:2.1": "Akittivagga",
"cp2:3.1": "Dānapāramī 2",
"cp2:4.1": "Saṅkhacariya",
"cp2:5.1": "“Punāparaṃ yadā homi,",
"cp2:5.2": "Brāhmaṇo saṅkhasavhayo;",
"cp2:5.3": "Mahāsamuddaṃ taritukāmo,",
"cp2:5.4": "Upagacchāmi paṭṭanaṃ.",
"cp2:6.1": "Tatthaddasaṃ paṭipathe,",
"cp2:6.2": "Sayambhuṃ aparājitaṃ;",
"cp2:6.3": "Kantāraddhānaṃ paṭipannaṃ,",
"cp2:6.4": "Tattāya kaṭhinabhūmiyā.",
"cp2:7.1": "Tamahaṃ paṭipathe disvā,",
"cp2:7.2": "imamatthaṃ vicintayiṃ;",
"cp2:7.3": "‘Idaṃ khettaṃ anuppattaṃ,",
"cp2:7.4": "puññakāmassa jantuno.",
"cp2:8.1": "Yathā kassako puriso,",
"cp2:8.2": "khettaṃ disvā mahāgamaṃ;",
"cp2:8.3": "Tattha bījaṃ na ropeti,",
"cp2:8.4": "na so dhaññena atthiko.",
"cp2:9.1": "Evamevāhaṃ puññakāmo,",
"cp2:9.2": "Disvā khettavaruttamaṃ;",
"cp2:9.3": "Yadi tattha kāraṃ na karomi,",
"cp2:9.4": "Nāhaṃ puññena atthiko.",
"cp2:10.1": "Yathā amacco muddikāmo,",
"cp2:10.2": "rañño antepure jane;",
"cp2:10.3": "Na deti tesaṃ dhanadhaññaṃ,",
"cp2:10.4": "muddito parihāyati.",
"cp2:11.1": "Evamevāhaṃ puññakāmo,",
"cp2:11.2": "Vipulaṃ disvāna dakkhiṇaṃ;",
"cp2:11.3": "Yadi tassa dānaṃ na dadāmi,",
"cp2:11.4": "Parihāyissāmi puññato’.",
"cp2:12.1": "Evāhaṃ cintayitvāna,",
"cp2:12.2": "orohitvā upāhanā;",
"cp2:12.3": "Tassa pādāni vanditvā,",
"cp2:12.4": "adāsiṃ chattupāhanaṃ.",
"cp2:13.1": "Tenevāhaṃ sataguṇato,",
"cp2:13.2": "Sukhumālo sukhedhito;",
"cp2:13.3": "Api ca dānaṃ paripūrento,",
"cp2:13.4": "Evaṃ tassa adāsahan”ti.",
"cp2:14.1": "Saṅkhacariyaṃ dutiyaṃ."
}