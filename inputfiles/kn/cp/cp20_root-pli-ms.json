{
"cp20:1.1": "Cariyāpiṭaka",
"cp20:2.1": "Hatthināgavagga",
"cp20:3.1": "Sīlapāramī 10",
"cp20:4.1": "Saṅkhapālacariya",
"cp20:5.1": "“Punāparaṃ yadā homi,",
"cp20:5.2": "saṅkhapālo mahiddhiko;",
"cp20:5.3": "Dāṭhāvudho ghoraviso,",
"cp20:5.4": "dvijivho uragādhibhū.",
"cp20:6.1": "Catuppathe mahāmagge,",
"cp20:6.2": "nānājanasamākule;",
"cp20:6.3": "Caturo aṅge adhiṭṭhāya,",
"cp20:6.4": "tattha vāsamakappayiṃ.",
"cp20:7.1": "Chaviyā cammena maṃsena,",
"cp20:7.2": "Nahāruaṭṭhikehi vā;",
"cp20:7.3": "Yassa etena karaṇīyaṃ,",
"cp20:7.4": "Dinnaṃyeva harātu so.",
"cp20:8.1": "Addasaṃsu bhojaputtā,",
"cp20:8.2": "kharā luddā akāruṇā;",
"cp20:8.3": "Upagañchuṃ mamaṃ tattha,",
"cp20:8.4": "daṇḍamuggarapāṇino.",
"cp20:9.1": "Nāsāya vinivijjhitvā,",
"cp20:9.2": "naṅguṭṭhe piṭṭhikaṇṭake;",
"cp20:9.3": "Kāje āropayitvāna,",
"cp20:9.4": "bhojaputtā hariṃsu maṃ.",
"cp20:10.1": "Sasāgarantaṃ pathaviṃ,",
"cp20:10.2": "sakānanaṃ sapabbataṃ;",
"cp20:10.3": "Icchamāno cahaṃ tattha,",
"cp20:10.4": "nāsāvātena jhāpaye.",
"cp20:11.1": "Sūlehi vinivijjhante,",
"cp20:11.2": "Koṭṭayantepi sattibhi;",
"cp20:11.3": "Bhojaputte na kuppāmi,",
"cp20:11.4": "Esā me sīlapāramī”ti. #234",
"cp20:12.1": "Saṅkhapālacariyaṃ dasamaṃ.",
"cp20:13.1": "Hatthināgavaggo dutiyo.",
"cp20:14.1": "Tassuddānaṃ",
"cp20:15.1": "Hatthināgo bhūridatto,",
"cp20:15.2": "campeyyo bodhi mahiṃso;",
"cp20:15.3": "Ruru mātaṅgo dhammo ca,",
"cp20:15.4": "atrajo ca jayaddiso.",
"cp20:16.1": "Ete nava sīlabalā,",
"cp20:16.2": "parikkhārā padesikā;",
"cp20:16.3": "Jīvitaṃ parirakkhitvā,",
"cp20:16.4": "sīlāni anurakkhisaṃ.",
"cp20:17.1": "Saṅkhapālassa me sato,",
"cp20:17.2": "sabbakālampi jīvitaṃ;",
"cp20:17.3": "Yassa kassaci niyyattaṃ,",
"cp20:17.4": "tasmā sā sīlapāramīti.",
"cp20:18.1": "Sīlapāraminiddeso niṭṭhito."
}