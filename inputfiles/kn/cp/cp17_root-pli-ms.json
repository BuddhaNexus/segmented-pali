{
"cp17:1.1": "Cariyāpiṭaka",
"cp17:2.1": "Hatthināgavagga",
"cp17:3.1": "Sīlapāramī 7",
"cp17:4.1": "Mātaṅgacariya",
"cp17:5.1": "“Punāparaṃ yadā homi,",
"cp17:5.2": "jaṭilo uggatāpano;",
"cp17:5.3": "Mātaṅgo nāma nāmena,",
"cp17:5.4": "sīlavā susamāhito.",
"cp17:6.1": "Ahañca brāhmaṇo eko,",
"cp17:6.2": "gaṅgākūle vasāmubho;",
"cp17:6.3": "Ahaṃ vasāmi upari,",
"cp17:6.4": "heṭṭhā vasati brāhmaṇo.",
"cp17:7.1": "Vicaranto anukūlamhi,",
"cp17:7.2": "uddhaṃ me assamaddasa;",
"cp17:7.3": "Tattha maṃ paribhāsetvā,",
"cp17:7.4": "abhisapi muddhaphālanaṃ.",
"cp17:8.1": "Yadihaṃ tassa pakuppeyyaṃ,",
"cp17:8.2": "yadi sīlaṃ na gopaye;",
"cp17:8.3": "Oloketvānahaṃ tassa,",
"cp17:8.4": "kareyyaṃ chārikaṃ viya.",
"cp17:9.1": "Yaṃ so tadā maṃ abhisapi,",
"cp17:9.2": "kupito duṭṭhamānaso;",
"cp17:9.3": "Tasseva matthake nipati,",
"cp17:9.4": "yogena taṃ pamocayiṃ.",
"cp17:10.1": "Anurakkhiṃ mama sīlaṃ,",
"cp17:10.2": "nārakkhiṃ mama jīvitaṃ;",
"cp17:10.3": "Sīlavā hi tadā āsiṃ,",
"cp17:10.4": "bodhiyāyeva kāraṇā”ti.",
"cp17:11.1": "Mātaṅgacariyaṃ sattamaṃ."
}