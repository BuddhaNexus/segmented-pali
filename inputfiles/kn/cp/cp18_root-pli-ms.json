{
  "cp18:0.1": "Cariyāpiṭaka ",
  "cp18:0.2": "Hatthināgavagga ",
  "cp18:0.3": "Sīlapāramī 8 ",
  "cp18:0.4": "Dhammadevaputtacariya ",
  "cp18:1.1": "“Punāparaṁ yadā homi, ",
  "cp18:1.2": "mahāpakkho mahiddhiko; ",
  "cp18:1.3": "Dhammo nāma mahāyakkho, ",
  "cp18:1.4": "sabbalokānukampako. ",
  "cp18:2.1": "Dasakusalakammapathe, ",
  "cp18:2.2": "samādapento mahājanaṁ; ",
  "cp18:2.3": "Carāmi gāmanigamaṁ, ",
  "cp18:2.4": "samitto saparijjano. ",
  "cp18:3.1": "Pāpo kadariyo yakkho, ",
  "cp18:3.2": "dīpento dasa pāpake; ",
  "cp18:3.3": "Sopettha mahiyā carati, ",
  "cp18:3.4": "samitto saparijjano. ",
  "cp18:4.1": "Dhammavādī adhammo ca, ",
  "cp18:4.2": "ubho paccanikā mayaṁ; ",
  "cp18:4.3": "Dhure dhuraṁ ghaṭṭayantā, ",
  "cp18:4.4": "samimhā paṭipathe ubho. ",
  "cp18:5.1": "Kalaho vattatī bhesmā, ",
  "cp18:5.2": "kalyāṇapāpakassa ca; ",
  "cp18:5.3": "Maggā okkamanatthāya, ",
  "cp18:5.4": "mahāyuddho upaṭṭhito. ",
  "cp18:6.1": "Yadihaṁ tassa kuppeyyaṁ, ",
  "cp18:6.2": "yadi bhinde tapoguṇaṁ; ",
  "cp18:6.3": "Sahaparijanaṁ tassa, ",
  "cp18:6.4": "rajabhūtaṁ kareyyahaṁ. ",
  "cp18:7.1": "Api cāhaṁ sīlarakkhāya, ",
  "cp18:7.2": "nibbāpetvāna mānasaṁ; ",
  "cp18:7.3": "Saha janenokkamitvā, ",
  "cp18:7.4": "pathaṁ pāpassa dāsahaṁ. ",
  "cp18:8.1": "Saha pathato okkante, ",
  "cp18:8.2": "katvā cittassa nibbutiṁ; ",
  "cp18:8.3": "Vivaraṁ adāsi pathavī, ",
  "cp18:8.4": "pāpayakkhassa tāvade”ti. ",
  "cp18:9.1": "Dhammadevaputtacariyaṁ aṭṭhamaṁ. "
}