{
"cp28:1.1": "Cariyāpiṭaka",
"cp28:2.1": "Yudhañjayavagga",
"cp28:3.1": "Saccapāramī 8",
"cp28:4.1": "Saccatāpasacariya",
"cp28:5.1": "“Punāparaṃ yadā homi,",
"cp28:5.2": "Tāpaso saccasavhayo;",
"cp28:5.3": "Saccena lokaṃ pālesiṃ,",
"cp28:5.4": "Samaggaṃ janamakāsahan”ti.",
"cp28:6.1": "Saccatāpasacariyaṃ aṭṭhamaṃ."
}