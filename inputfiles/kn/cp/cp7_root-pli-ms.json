{
  "cp7:0.1": "Cariyāpiṭaka ",
  "cp7:0.2": "Akittivagga ",
  "cp7:0.3": "Dānapāramī 7 ",
  "cp7:0.4": "Candakumāracariya ",
  "cp7:1.1": "“Punāparaṁ yadā homi, ",
  "cp7:1.2": "ekarājassa atrajo; ",
  "cp7:1.3": "Nagare pupphavatiyā, ",
  "cp7:1.4": "kumāro candasavhayo. ",
  "cp7:2.1": "Tadāhaṁ yajanā mutto, ",
  "cp7:2.2": "nikkhanto yaññavāṭato; ",
  "cp7:2.3": "Saṁvegaṁ janayitvāna, ",
  "cp7:2.4": "mahādānaṁ pavattayiṁ. ",
  "cp7:3.1": "Nāhaṁ pivāmi khādāmi, ",
  "cp7:3.2": "napi bhuñjāmi bhojanaṁ; ",
  "cp7:3.3": "Dakkhiṇeyye adatvāna, ",
  "cp7:3.4": "api chappañcarattiyo. ",
  "cp7:4.1": "Yathāpi vāṇijo nāma, ",
  "cp7:4.2": "Katvāna bhaṇḍasañcayaṁ; ",
  "cp7:4.3": "Yattha lābho mahā hoti, ",
  "cp7:4.4": "Tattha taṁ harati bhaṇḍakaṁ. ",
  "cp7:5.1": "Tatheva sakabhuttāpi, ",
  "cp7:5.2": "pare dinnaṁ mahapphalaṁ; ",
  "cp7:5.3": "Tasmā parassa dātabbaṁ, ",
  "cp7:5.4": "satabhāgo bhavissati. ",
  "cp7:6.1": "Etamatthavasaṁ ñatvā, ",
  "cp7:6.2": "demi dānaṁ bhavābhave; ",
  "cp7:6.3": "Na paṭikkamāmi dānato, ",
  "cp7:6.4": "sambodhimanupattiyā”ti. ",
  "cp7:7.1": "Candakumāracariyaṁ sattamaṁ. "
}