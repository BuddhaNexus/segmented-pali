{
"cp32:1.1": "Cariyāpiṭaka",
"cp32:2.1": "Yudhañjayavagga",
"cp32:3.1": "Saccapāramī 6",
"cp32:4.1": "Sutasomacariya",
"cp32:5.1": "“Punāparaṃ yadā homi,",
"cp32:5.2": "sutasomo mahīpati;",
"cp32:5.3": "Gahito porisādena,",
"cp32:5.4": "brāhmaṇe saṅgaraṃ sariṃ.",
"cp32:6.1": "Khattiyānaṃ ekasataṃ,",
"cp32:6.2": "āvuṇitvā karattale;",
"cp32:6.3": "Etesaṃ pamilāpetvā,",
"cp32:6.4": "yaññatthe upanayī mamaṃ.",
"cp32:7.1": "Apucchi maṃ porisādo,",
"cp32:7.2": "‘kiṃ tvaṃ icchasi nissajaṃ;",
"cp32:7.3": "Yathāmati te kāhāmi,",
"cp32:7.4": "yadi me tvaṃ punehisi’.",
"cp32:8.1": "Tassa paṭissuṇitvāna,",
"cp32:8.2": "paṇhe āgamanaṃ mama;",
"cp32:8.3": "Upagantvā puraṃ rammaṃ,",
"cp32:8.4": "rajjaṃ niyyādayiṃ tadā.",
"cp32:9.1": "Anussaritvā sataṃ dhammaṃ,",
"cp32:9.2": "pubbakaṃ jinasevitaṃ;",
"cp32:9.3": "Brāhmaṇassa dhanaṃ datvā,",
"cp32:9.4": "porisādaṃ upāgamiṃ.",
"cp32:10.1": "Natthi me saṃsayo tattha,",
"cp32:10.2": "Ghātayissati vā na vā;",
"cp32:10.3": "Saccavācānurakkhanto,",
"cp32:10.4": "Jīvitaṃ cajitumupāgamiṃ;",
"cp32:10.5": "Saccena me samo natthi,",
"cp32:10.6": "Esā me saccapāramī”ti.",
"cp32:11.1": "Sutasomacariyaṃ dvādasamaṃ."
}