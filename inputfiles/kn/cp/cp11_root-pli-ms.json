{
"cp11:1.1": "Cariyāpiṭaka",
"cp11:2.1": "Hatthināgavagga",
"cp11:3.1": "Sīlapāramī 1",
"cp11:4.1": "Mātuposakacariya",
"cp11:5.1": "“Yadā ahosiṃ pavane,",
"cp11:5.2": "kuñjaro mātuposako;",
"cp11:5.3": "Na tadā atthi mahiyā,",
"cp11:5.4": "guṇena mama sādiso.",
"cp11:6.1": "Pavane disvā vanacaro,",
"cp11:6.2": "rañño maṃ paṭivedayi;",
"cp11:6.3": "‘Tavānucchavo mahārāja,",
"cp11:6.4": "gajo vasati kānane.",
"cp11:7.1": "Na tassa parikkhāyattho,",
"cp11:7.2": "napi āḷakakāsuyā;",
"cp11:7.3": "Saha gahite soṇḍāya,",
"cp11:7.4": "sayameva idhehi’ti.",
"cp11:8.1": "Tassa taṃ vacanaṃ sutvā,",
"cp11:8.2": "rājāpi tuṭṭhamānaso;",
"cp11:8.3": "Pesesi hatthidamakaṃ,",
"cp11:8.4": "chekācariyaṃ susikkhitaṃ.",
"cp11:9.1": "Gantvā so hatthidamako,",
"cp11:9.2": "addasa padumassare;",
"cp11:9.3": "Bhisamuḷālaṃ uddharantaṃ,",
"cp11:9.4": "yāpanatthāya mātuyā.",
"cp11:10.1": "Viññāya me sīlaguṇaṃ,",
"cp11:10.2": "lakkhaṇaṃ upadhārayi;",
"cp11:10.3": "‘Ehi puttā’ti vatvāna,",
"cp11:10.4": "mama soṇḍāya aggahi.",
"cp11:11.1": "Yaṃ me tadā pākatikaṃ,",
"cp11:11.2": "sarīrānugataṃ balaṃ;",
"cp11:11.3": "Ajja nāgasahassānaṃ,",
"cp11:11.4": "balena samasādisaṃ.",
"cp11:12.1": "Yadihaṃ tesaṃ pakuppeyyaṃ,",
"cp11:12.2": "upetānaṃ gahaṇāya maṃ;",
"cp11:12.3": "Paṭibalo bhave tesaṃ,",
"cp11:12.4": "yāva rajjampi mānusaṃ.",
"cp11:13.1": "Api cāhaṃ sīlarakkhāya,",
"cp11:13.2": "Sīlapāramipūriyā;",
"cp11:13.3": "Na karomi citte aññathattaṃ,",
"cp11:13.4": "Pakkhipantaṃ mamāḷake.",
"cp11:14.1": "Yadi te maṃ tattha koṭṭeyyuṃ,",
"cp11:14.2": "pharasūhi tomarehi ca;",
"cp11:14.3": "Neva tesaṃ pakuppeyyaṃ,",
"cp11:14.4": "sīlakhaṇḍabhayā mamā”ti.",
"cp11:15.1": "Mātuposakacariyaṃ paṭhamaṃ."
}