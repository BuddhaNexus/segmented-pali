{
  "cp14:0.1": "Cariyāpiṭaka ",
  "cp14:0.2": "Hatthināgavagga ",
  "cp14:0.3": "Sīlapāramī 4 ",
  "cp14:0.4": "Cūḷabodhicariya ",
  "cp14:1.1": "“Punāparaṁ yadā homi, ",
  "cp14:1.2": "cūḷabodhi susīlavā; ",
  "cp14:1.3": "Bhavaṁ disvāna bhayato, ",
  "cp14:1.4": "nekkhammaṁ abhinikkhamiṁ. ",
  "cp14:2.1": "Yā me dutiyikā āsi, ",
  "cp14:2.2": "brāhmaṇī kanakasannibhā; ",
  "cp14:2.3": "Sāpi vaṭṭe anapekkhā, ",
  "cp14:2.4": "nekkhammaṁ abhinikkhami. ",
  "cp14:3.1": "Nirālayā chinnabandhū, ",
  "cp14:3.2": "anapekkhā kule gaṇe; ",
  "cp14:3.3": "Carantā gāmanigamaṁ, ",
  "cp14:3.4": "bārāṇasimupāgamuṁ. ",
  "cp14:4.1": "Tattha vasāma nipakā, ",
  "cp14:4.2": "asaṁsaṭṭhā kule gaṇe; ",
  "cp14:4.3": "Nirākule appasadde, ",
  "cp14:4.4": "rājuyyāne vasāmubho. ",
  "cp14:5.1": "Uyyānadassanaṁ gantvā, ",
  "cp14:5.2": "rājā addasa brāhmaṇiṁ; ",
  "cp14:5.3": "Upagamma mamaṁ pucchi, ",
  "cp14:5.4": "‘tuyhesā kā kassa bhariyā’. ",
  "cp14:6.1": "Evaṁ vutte, ahaṁ tassa, ",
  "cp14:6.2": "idaṁ vacanamabraviṁ; ",
  "cp14:6.3": "‘Na mayhaṁ bhariyā esā, ",
  "cp14:6.4": "sahadhammā ekasāsanī’. ",
  "cp14:7.1": "Tissā sārattagadhito, ",
  "cp14:7.2": "gāhāpetvāna ceṭake; ",
  "cp14:7.3": "Nippīḷayanto balasā, ",
  "cp14:7.4": "antepuraṁ pavesayi. ",
  "cp14:8.1": "Odapattakiyā mayhaṁ, ",
  "cp14:8.2": "sahajā ekasāsanī; ",
  "cp14:8.3": "Ākaḍḍhitvā nayantiyā, ",
  "cp14:8.4": "kopo me upapajjatha. ",
  "cp14:9.1": "Saha kope samuppanne, ",
  "cp14:9.2": "sīlabbatamanussariṁ; ",
  "cp14:9.3": "Tattheva kopaṁ niggaṇhiṁ, ",
  "cp14:9.4": "nādāsiṁ vaḍḍhitūpari. ",
  "cp14:10.1": "Yadi naṁ brāhmaṇiṁ koci, ",
  "cp14:10.2": "koṭṭeyya tiṇhasattiyā; ",
  "cp14:10.3": "Neva sīlaṁ pabhindeyyaṁ, ",
  "cp14:10.4": "bodhiyāyeva kāraṇā. ",
  "cp14:11.1": "Na mesā brāhmaṇī dessā, ",
  "cp14:11.2": "napi me balaṁ na vijjati; ",
  "cp14:11.3": "Sabbaññutaṁ piyaṁ mayhaṁ, ",
  "cp14:11.4": "tasmā sīlānurakkhisan”ti. ",
  "cp14:12.1": "Cūḷabodhicariyaṁ catutthaṁ. "
}