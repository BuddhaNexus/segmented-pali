{
"cp14:1.1": "Cariyāpiṭaka",
"cp14:2.1": "Hatthināgavagga",
"cp14:3.1": "Sīlapāramī 4",
"cp14:4.1": "Cūḷabodhicariya",
"cp14:5.1": "“Punāparaṃ yadā homi,",
"cp14:5.2": "cūḷabodhi susīlavā;",
"cp14:5.3": "Bhavaṃ disvāna bhayato,",
"cp14:5.4": "nekkhammaṃ abhinikkhamiṃ.",
"cp14:6.1": "Yā me dutiyikā āsi,",
"cp14:6.2": "brāhmaṇī kanakasannibhā;",
"cp14:6.3": "Sāpi vaṭṭe anapekkhā,",
"cp14:6.4": "nekkhammaṃ abhinikkhami.",
"cp14:7.1": "Nirālayā chinnabandhū,",
"cp14:7.2": "anapekkhā kule gaṇe;",
"cp14:7.3": "Carantā gāmanigamaṃ,",
"cp14:7.4": "bārāṇasimupāgamuṃ.",
"cp14:8.1": "Tattha vasāma nipakā,",
"cp14:8.2": "asaṃsaṭṭhā kule gaṇe;",
"cp14:8.3": "Nirākule appasadde,",
"cp14:8.4": "rājuyyāne vasāmubho.",
"cp14:9.1": "Uyyānadassanaṃ gantvā,",
"cp14:9.2": "rājā addasa brāhmaṇiṃ;",
"cp14:9.3": "Upagamma mamaṃ pucchi,",
"cp14:9.4": "‘tuyhesā kā kassa bhariyā’.",
"cp14:10.1": "Evaṃ vutte, ahaṃ tassa,",
"cp14:10.2": "idaṃ vacanamabraviṃ;",
"cp14:10.3": "‘Na mayhaṃ bhariyā esā,",
"cp14:10.4": "sahadhammā ekasāsanī’.",
"cp14:11.1": "Tissā sārattagadhito,",
"cp14:11.2": "gāhāpetvāna ceṭake;",
"cp14:11.3": "Nippīḷayanto balasā,",
"cp14:11.4": "antepuraṃ pavesayi.",
"cp14:12.1": "Odapattakiyā mayhaṃ,",
"cp14:12.2": "sahajā ekasāsanī;",
"cp14:12.3": "Ākaḍḍhitvā nayantiyā,",
"cp14:12.4": "kopo me upapajjatha.",
"cp14:13.1": "Saha kope samuppanne,",
"cp14:13.2": "sīlabbatamanussariṃ;",
"cp14:13.3": "Tattheva kopaṃ niggaṇhiṃ,",
"cp14:13.4": "nādāsiṃ vaḍḍhitūpari.",
"cp14:14.1": "Yadi naṃ brāhmaṇiṃ koci,",
"cp14:14.2": "koṭṭeyya tiṇhasattiyā;",
"cp14:14.3": "Neva sīlaṃ pabhindeyyaṃ,",
"cp14:14.4": "bodhiyāyeva kāraṇā.",
"cp14:15.1": "Na mesā brāhmaṇī dessā,",
"cp14:15.2": "napi me balaṃ na vijjati;",
"cp14:15.3": "Sabbaññutaṃ piyaṃ mayhaṃ,",
"cp14:15.4": "tasmā sīlānurakkhisan”ti.",
"cp14:16.1": "Cūḷabodhicariyaṃ catutthaṃ."
}