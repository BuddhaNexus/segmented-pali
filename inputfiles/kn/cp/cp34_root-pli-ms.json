{
"cp34:1.1": "Cariyāpiṭaka",
"cp34:2.1": "Yudhañjayavagga",
"cp34:3.1": "Mettāpāramī 2",
"cp34:4.1": "Ekarājacariya",
"cp34:5.1": "“Punāparaṃ yadā homi,",
"cp34:5.2": "ekarājāti vissuto;",
"cp34:5.3": "Paramaṃ sīlaṃ adhiṭṭhāya,",
"cp34:5.4": "pasāsāmi mahāmahiṃ.",
"cp34:6.1": "Dasa kusalakammapathe,",
"cp34:6.2": "vattāmi anavasesato;",
"cp34:6.3": "Catūhi saṅgahavatthūhi,",
"cp34:6.4": "saṅgaṇhāmi mahājanaṃ.",
"cp34:7.1": "Evaṃ me appamattassa,",
"cp34:7.2": "idha loke parattha ca;",
"cp34:7.3": "Dabbaseno upagantvā,",
"cp34:7.4": "acchindanto puraṃ mama.",
"cp34:8.1": "Rājūpajīve nigame,",
"cp34:8.2": "sabalaṭṭhe saraṭṭhake;",
"cp34:8.3": "Sabbaṃ hatthagataṃ katvā,",
"cp34:8.4": "kāsuyā nikhaṇī mamaṃ.",
"cp34:9.1": "Amaccamaṇḍalaṃ rajjaṃ,",
"cp34:9.2": "phītaṃ antepuraṃ mama;",
"cp34:9.3": "Acchinditvāna gahitaṃ,",
"cp34:9.4": "piyaṃ puttaṃva passahaṃ;",
"cp34:9.5": "Mettāya me samo natthi,",
"cp34:9.6": "esā me mettāpāramī”ti.",
"cp34:10.1": "Ekarājacariyaṃ cuddasamaṃ."
}