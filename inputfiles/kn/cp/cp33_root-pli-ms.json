{
"cp33:1.1": "Cariyāpiṭaka",
"cp33:2.1": "Yudhañjayavagga",
"cp33:3.1": "Mettāpāramī 1",
"cp33:4.1": "Suvaṇṇasāmacariya",
"cp33:5.1": "“Sāmo yadā vane āsiṃ,",
"cp33:5.2": "sakkena abhinimmito;",
"cp33:5.3": "Pavane sīhabyagghe ca,",
"cp33:5.4": "mettāya mupanāmayiṃ.",
"cp33:6.1": "Sīhabyagghehi dīpīhi,",
"cp33:6.2": "acchehi mahisehi ca;",
"cp33:6.3": "Pasadamigavarāhehi,",
"cp33:6.4": "parivāretvā vane vasiṃ.",
"cp33:7.1": "Na maṃ koci uttasati,",
"cp33:7.2": "napi bhāyāmi kassaci;",
"cp33:7.3": "Mettābalenupatthaddho,",
"cp33:7.4": "ramāmi pavane tadā”ti.",
"cp33:8.1": "Suvaṇṇasāmacariyaṃ terasamaṃ."
}