{
"cp27:1.1": "Cariyāpiṭaka",
"cp27:2.1": "Yudhañjayavagga",
"cp27:3.1": "Saccapāramī 7",
"cp27:4.1": "Kapirājacariya",
"cp27:5.1": "“Yadā ahaṃ kapi āsiṃ,",
"cp27:5.2": "nadīkūle darīsaye;",
"cp27:5.3": "Pīḷito susumārena,",
"cp27:5.4": "gamanaṃ na labhāmahaṃ.",
"cp27:6.1": "Yamhokāse ahaṃ ṭhatvā,",
"cp27:6.2": "orā pāraṃ patāmahaṃ;",
"cp27:6.3": "Tatthacchi sattu vadhako,",
"cp27:6.4": "kumbhīlo luddadassano.",
"cp27:7.1": "So maṃ asaṃsi ‘ehī’ti,",
"cp27:7.2": "‘ahampemī’ti taṃ vatiṃ;",
"cp27:7.3": "Tassa matthakamakkamma,",
"cp27:7.4": "parakūle patiṭṭhahiṃ.",
"cp27:8.1": "Na tassa alikaṃ bhaṇitaṃ,",
"cp27:8.2": "yathā vācaṃ akāsahaṃ;",
"cp27:8.3": "Saccena me samo natthi,",
"cp27:8.4": "esā me saccapāramī”ti.",
"cp27:9.1": "Kapirājacariyaṃ sattamaṃ."
}