{
  "cp27:0.1": "Cariyāpiṭaka",
  "cp27:0.2": "Yudhañjayavagga",
  "cp27:0.3": "Saccapāramī 1",
  "cp27:0.4": "Kapirājacariya",
  "cp27:1.1": "“Yadā ahaṁ kapi āsiṁ,",
  "cp27:1.2": "nadīkūle darīsaye;",
  "cp27:1.3": "Pīḷito susumārena,",
  "cp27:1.4": "gamanaṁ na labhāmahaṁ.",
  "cp27:2.1": "Yamhokāse ahaṁ ṭhatvā,",
  "cp27:2.2": "orā pāraṁ patāmahaṁ;",
  "cp27:2.3": "Tatthacchi sattu vadhako,",
  "cp27:2.4": "kumbhīlo luddadassano.",
  "cp27:3.1": "So maṁ asaṁsi ‘ehī’ti,",
  "cp27:3.2": "‘ahampemī’ti taṁ vatiṁ;",
  "cp27:3.3": "Tassa matthakamakkamma,",
  "cp27:3.4": "parakūle patiṭṭhahiṁ.",
  "cp27:4.1": "Na tassa alikaṁ bhaṇitaṁ,",
  "cp27:4.2": "yathā vācaṁ akāsahaṁ;",
  "cp27:4.3": "Saccena me samo natthi,",
  "cp27:4.4": "esā me saccapāramī”ti.",
  "cp27:4.5": "Kapirājacariyaṁ sattamaṁ."
}