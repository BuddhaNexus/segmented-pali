{
"cp31:1.1": "Cariyāpiṭaka",
"cp31:2.1": "Yudhañjayavagga",
"cp31:3.1": "Saccapāramī 5",
"cp31:4.1": "Kaṇhadīpāyanacariya",
"cp31:5.1": "“Punāparaṃ yadā homi,",
"cp31:5.2": "kaṇhadīpāyano isi;",
"cp31:5.3": "Paropaññāsavassāni,",
"cp31:5.4": "anabhiratocariṃ ahaṃ.",
"cp31:6.1": "Na koci etaṃ jānāti,",
"cp31:6.2": "Anabhiratimanaṃ mama;",
"cp31:6.3": "Ahañhi kassaci nācikkhiṃ,",
"cp31:6.4": "Arati me carati mānase.",
"cp31:7.1": "Sabrahmacārī maṇḍabyo,",
"cp31:7.2": "sahāyo me mahāisi;",
"cp31:7.3": "Pubbakammasamāyutto,",
"cp31:7.4": "sūlamāropanaṃ labhi.",
"cp31:8.1": "Tamahaṃ upaṭṭhahitvāna,",
"cp31:8.2": "ārogyamanupāpayiṃ;",
"cp31:8.3": "Āpucchitvāna āgañchiṃ,",
"cp31:8.4": "yaṃ mayhaṃ sakamassamaṃ.",
"cp31:9.1": "Sahāyo brāhmaṇo mayhaṃ,",
"cp31:9.2": "bhariyaṃ ādāya puttakaṃ;",
"cp31:9.3": "Tayo janā samāgantvā,",
"cp31:9.4": "āgañchuṃ pāhunāgataṃ.",
"cp31:10.1": "Sammodamāno tehi saha,",
"cp31:10.2": "nisinno sakamassame;",
"cp31:10.3": "Dārako vaṭṭamanukkhipaṃ,",
"cp31:10.4": "āsīvisamakopayi.",
"cp31:11.1": "Tato so vaṭṭagataṃ maggaṃ,",
"cp31:11.2": "anvesanto kumārako;",
"cp31:11.3": "Āsīvisassa hatthena,",
"cp31:11.4": "uttamaṅgaṃ parāmasi.",
"cp31:12.1": "Tassa āmasane kuddho,",
"cp31:12.2": "sappo visabalassito;",
"cp31:12.3": "Kupito paramakopena,",
"cp31:12.4": "aḍaṃsi dārakaṃ khaṇe.",
"cp31:13.1": "Sahadaṭṭho āsīvisena,",
"cp31:13.2": "dārako papati bhūmiyaṃ;",
"cp31:13.3": "Tenāhaṃ dukkhito āsiṃ,",
"cp31:13.4": "mama vāhasi taṃ dukkhaṃ.",
"cp31:14.1": "Tyāhaṃ assāsayitvāna,",
"cp31:14.2": "dukkhite sokasallite;",
"cp31:14.3": "Paṭhamaṃ akāsiṃ kiriyaṃ,",
"cp31:14.4": "aggaṃ saccaṃ varuttamaṃ.",
"cp31:15.1": "‘Sattāhamevāhaṃ pasannacitto,",
"cp31:15.2": "Puññatthiko acariṃ brahmacariyaṃ;",
"cp31:15.3": "Athāparaṃ yaṃ caritaṃ mamedaṃ,",
"cp31:15.4": "Vassāni paññāsasamādhikāni.",
"cp31:16.1": "Akāmako vāhi ahaṃ carāmi,",
"cp31:16.2": "Etena saccena suvatthi hotu;",
"cp31:16.3": "Hataṃ visaṃ jīvatu yaññadatto’.",
"cp31:17.1": "Saha sacce kate mayhaṃ,",
"cp31:17.2": "visavegena vedhito;",
"cp31:17.3": "Abujjhitvāna vuṭṭhāsi,",
"cp31:17.4": "arogo cāsi māṇavo;",
"cp31:17.5": "Saccena me samo natthi,",
"cp31:17.6": "esā me saccapāramī”ti.",
"cp31:18.1": "Kaṇhadīpāyanacariyaṃ ekādasamaṃ."
}