{
  "cp1:0.1": "Cariyāpiṭaka ",
  "cp1:0.2": "Akittivagga ",
  "cp1:0.3": "Dānapāramī 1 ",
  "cp1:0.4": "Akitticariya ",
  "cp1:1.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa. ",
  "cp1:2.1": "“Kappe ca satasahasse, ",
  "cp1:2.2": "caturo ca asaṅkhiye; ",
  "cp1:2.3": "Etthantare yaṁ caritaṁ, ",
  "cp1:2.4": "sabbaṁ taṁ bodhipācanaṁ. ",
  "cp1:3.1": "Atītakappe caritaṁ, ",
  "cp1:3.2": "ṭhapayitvā bhavābhave; ",
  "cp1:3.3": "Imamhi kappe caritaṁ, ",
  "cp1:3.4": "pavakkhissaṁ suṇohi me. ",
  "cp1:4.1": "Yadā ahaṁ brahāraññe, ",
  "cp1:4.2": "suññe vipinakānane; ",
  "cp1:4.3": "Ajjhogāhetvā viharāmi, ",
  "cp1:4.4": "akitti nāma tāpaso. ",
  "cp1:5.1": "Tadā maṁ tapatejena, ",
  "cp1:5.2": "santatto tidivābhibhū; ",
  "cp1:5.3": "Dhārento brāhmaṇavaṇṇaṁ, ",
  "cp1:5.4": "bhikkhāya maṁ upāgami. ",
  "cp1:6.1": "Pavanā ābhataṁ paṇṇaṁ, ",
  "cp1:6.2": "atelañca aloṇikaṁ; ",
  "cp1:6.3": "Mama dvāre ṭhitaṁ disvā, ",
  "cp1:6.4": "sakaṭāhena ākiriṁ. ",
  "cp1:7.1": "Tassa datvānahaṁ paṇṇaṁ, ",
  "cp1:7.2": "nikkujjitvāna bhājanaṁ; ",
  "cp1:7.3": "Punesanaṁ jahitvāna, ",
  "cp1:7.4": "pāvisiṁ paṇṇasālakaṁ. ",
  "cp1:8.1": "Dutiyampi tatiyampi, ",
  "cp1:8.2": "upagañchi mamantikaṁ; ",
  "cp1:8.3": "Akampito anolaggo, ",
  "cp1:8.4": "evamevamadāsahaṁ. ",
  "cp1:9.1": "Na me tappaccayā atthi, ",
  "cp1:9.2": "sarīrasmiṁ vivaṇṇiyaṁ; ",
  "cp1:9.3": "Pītisukhena ratiyā, ",
  "cp1:9.4": "vītināmemi taṁ divaṁ. ",
  "cp1:10.1": "Yadi māsampi dvemāsaṁ, ",
  "cp1:10.2": "dakkhiṇeyyaṁ varaṁ labhe; ",
  "cp1:10.3": "Akampito anolīno, ",
  "cp1:10.4": "dadeyyaṁ dānamuttamaṁ. ",
  "cp1:11.1": "Na tassa dānaṁ dadamāno, ",
  "cp1:11.2": "yasaṁ lābhañca patthayiṁ; ",
  "cp1:11.3": "Sabbaññutaṁ patthayāno, ",
  "cp1:11.4": "tāni kammāni ācarin”ti. ",
  "cp1:12.1": "Akitticariyaṁ paṭhamaṁ. "
}