{
"cp1:1.1": "Cariyāpiṭaka",
"cp1:2.1": "Akittivagga",
"cp1:3.1": "Dānapāramī 1",
"cp1:4.1": "Akitticariya",
"cp1:5.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
"cp1:6.1": "“Kappe ca satasahasse,",
"cp1:6.2": "caturo ca asaṅkhiye;",
"cp1:6.3": "Etthantare yaṃ caritaṃ,",
"cp1:6.4": "sabbaṃ taṃ bodhipācanaṃ.",
"cp1:7.1": "Atītakappe caritaṃ,",
"cp1:7.2": "ṭhapayitvā bhavābhave;",
"cp1:7.3": "Imamhi kappe caritaṃ,",
"cp1:7.4": "pavakkhissaṃ suṇohi me.",
"cp1:8.1": "Yadā ahaṃ brahāraññe,",
"cp1:8.2": "suññe vipinakānane;",
"cp1:8.3": "Ajjhogāhetvā viharāmi,",
"cp1:8.4": "akitti nāma tāpaso.",
"cp1:9.1": "Tadā maṃ tapatejena,",
"cp1:9.2": "santatto tidivābhibhū;",
"cp1:9.3": "Dhārento brāhmaṇavaṇṇaṃ,",
"cp1:9.4": "bhikkhāya maṃ upāgami.",
"cp1:10.1": "Pavanā ābhataṃ paṇṇaṃ,",
"cp1:10.2": "atelañca aloṇikaṃ;",
"cp1:10.3": "Mama dvāre ṭhitaṃ disvā,",
"cp1:10.4": "sakaṭāhena ākiriṃ.",
"cp1:11.1": "Tassa datvānahaṃ paṇṇaṃ,",
"cp1:11.2": "nikkujjitvāna bhājanaṃ;",
"cp1:11.3": "Punesanaṃ jahitvāna,",
"cp1:11.4": "pāvisiṃ paṇṇasālakaṃ.",
"cp1:12.1": "Dutiyampi tatiyampi,",
"cp1:12.2": "upagañchi mamantikaṃ;",
"cp1:12.3": "Akampito anolaggo,",
"cp1:12.4": "evamevamadāsahaṃ.",
"cp1:13.1": "Na me tappaccayā atthi,",
"cp1:13.2": "sarīrasmiṃ vivaṇṇiyaṃ;",
"cp1:13.3": "Pītisukhena ratiyā,",
"cp1:13.4": "vītināmemi taṃ divaṃ.",
"cp1:14.1": "Yadi māsampi dvemāsaṃ,",
"cp1:14.2": "dakkhiṇeyyaṃ varaṃ labhe;",
"cp1:14.3": "Akampito anolīno,",
"cp1:14.4": "dadeyyaṃ dānamuttamaṃ.",
"cp1:15.1": "Na tassa dānaṃ dadamāno,",
"cp1:15.2": "yasaṃ lābhañca patthayiṃ;",
"cp1:15.3": "Sabbaññutaṃ patthayāno,",
"cp1:15.4": "tāni kammāni ācarin”ti.",
"cp1:16.1": "Akitticariyaṃ paṭhamaṃ."
}