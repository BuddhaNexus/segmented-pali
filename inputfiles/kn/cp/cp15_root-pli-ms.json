{
  "cp15:0.1": "Cariyāpiṭaka ",
  "cp15:0.2": "Hatthināgavagga ",
  "cp15:0.3": "Sīlapāramī 5 ",
  "cp15:0.4": "Mahiṁsarājacariya ",
  "cp15:1.1": "“Punāparaṁ yadā homi, ",
  "cp15:1.2": "mahiṁso pavanacārako; ",
  "cp15:1.3": "Pavaḍḍhakāyo balavā, ",
  "cp15:1.4": "mahanto bhīmadassano. ",
  "cp15:2.1": "Pabbhāre giridugge ca, ",
  "cp15:2.2": "rukkhamūle dakāsaye; ",
  "cp15:2.3": "Hotettha ṭhānaṁ mahiṁsānaṁ, ",
  "cp15:2.4": "koci koci tahiṁ tahiṁ. ",
  "cp15:3.1": "Vicaranto brahāraññe, ",
  "cp15:3.2": "ṭhānaṁ addasa bhaddakaṁ; ",
  "cp15:3.3": "Taṁ ṭhānaṁ upagantvāna, ",
  "cp15:3.4": "tiṭṭhāmi ca sayāmi ca. ",
  "cp15:4.1": "Athettha kapimāgantvā, ",
  "cp15:4.2": "pāpo anariyo lahu; ",
  "cp15:4.3": "Khandhe nalāṭe bhamuke, ",
  "cp15:4.4": "mutteti ohadeti taṁ. ",
  "cp15:5.1": "Sakimpi divasaṁ dutiyaṁ, ",
  "cp15:5.2": "tatiyaṁ catutthampi ca; ",
  "cp15:5.3": "Dūseti maṁ sabbakālaṁ, ",
  "cp15:5.4": "tena homi upadduto. ",
  "cp15:6.1": "Mamaṁ upaddutaṁ disvā, ",
  "cp15:6.2": "yakkho maṁ idamabravi; ",
  "cp15:6.3": "‘Nāsehetaṁ chavaṁ pāpaṁ, ",
  "cp15:6.4": "siṅgehi ca khurehi ca’. ",
  "cp15:7.1": "Evaṁ vutte, tadā yakkhe, ",
  "cp15:7.2": "ahaṁ taṁ idamabraviṁ; ",
  "cp15:7.3": "‘Kiṁ tvaṁ makkhesi kuṇapena, ",
  "cp15:7.4": "pāpena anariyena maṁ. ",
  "cp15:8.1": "Yadihaṁ tassa pakuppeyyaṁ, ",
  "cp15:8.2": "tato hīnataro bhave; ",
  "cp15:8.3": "Sīlañca me pabhijjeyya, ",
  "cp15:8.4": "viññū ca garaheyyu maṁ. ",
  "cp15:9.1": "Hīḷitā jīvitā vāpi, ",
  "cp15:9.2": "parisuddhena mataṁ varaṁ; ",
  "cp15:9.3": "Kyāhaṁ jīvitahetūpi, ",
  "cp15:9.4": "kāhāmi paraheṭhanaṁ’. ",
  "cp15:10.1": "Mamevāyaṁ maññamāno, ",
  "cp15:10.2": "aññepevaṁ karissati; ",
  "cp15:10.3": "Teva tassa vadhissanti, ",
  "cp15:10.4": "sā me mutti bhavissati. ",
  "cp15:11.1": "Hīnamajjhimaukkaṭṭhe, ",
  "cp15:11.2": "sahanto avamānitaṁ; ",
  "cp15:11.3": "Evaṁ labhati sappañño, ",
  "cp15:11.4": "manasā yathāpatthitan”ti. ",
  "cp15:12.1": "Mahiṁsarājacariyaṁ pañcamaṁ. "
}