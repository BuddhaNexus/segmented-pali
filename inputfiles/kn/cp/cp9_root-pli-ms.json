{
"cp9:1.1": "Cariyāpiṭaka",
"cp9:2.1": "Akittivagga",
"cp9:3.1": "Dānapāramī 9",
"cp9:4.1": "Vessantaracariya",
"cp9:5.1": "“Yā me ahosi janikā,",
"cp9:5.2": "phussatī nāma khattiyā;",
"cp9:5.3": "Sā atītāsu jātīsu,",
"cp9:5.4": "sakkassa mahesī piyā.",
"cp9:6.1": "Tassā āyukkhayaṃ ñatvā,",
"cp9:6.2": "devindo etadabravi;",
"cp9:6.3": "‘Dadāmi te dasa vare,",
"cp9:6.4": "varabhadde yadicchasi’.",
"cp9:7.1": "Evaṃ vuttā ca sā devī,",
"cp9:7.2": "sakkaṃ punidamabravi;",
"cp9:7.3": "‘Kiṃ nu me aparādhatthi,",
"cp9:7.4": "kiṃ nu dessā ahaṃ tava;",
"cp9:7.5": "Rammā cāvesi maṃ ṭhānā,",
"cp9:7.6": "vātova dharaṇīruhaṃ’.",
"cp9:8.1": "Evaṃ vutto ca so sakko,",
"cp9:8.2": "puna tassidamabravi;",
"cp9:8.3": "‘Na ceva te kataṃ pāpaṃ,",
"cp9:8.4": "na ca me tvaṃsi appiyā.",
"cp9:9.1": "Ettakaṃyeva te āyu,",
"cp9:9.2": "cavanakālo bhavissati;",
"cp9:9.3": "Paṭiggaṇha mayā dinne,",
"cp9:9.4": "vare dasa varuttame’.",
"cp9:10.1": "Sakkena sā dinnavarā,",
"cp9:10.2": "tuṭṭhahaṭṭhā pamoditā;",
"cp9:10.3": "Mamaṃ abbhantaraṃ katvā,",
"cp9:10.4": "phussatī dasa vare varī.",
"cp9:11.1": "Tato cutā sā phussatī,",
"cp9:11.2": "khattiye upapajjatha;",
"cp9:11.3": "Jetuttaramhi nagare,",
"cp9:11.4": "sañjayena samāgami.",
"cp9:12.1": "Yadāhaṃ phussatiyā kucchiṃ,",
"cp9:12.2": "okkanto piyamātuyā;",
"cp9:12.3": "Mama tejena me mātā,",
"cp9:12.4": "sadā dānaratā ahu.",
"cp9:13.1": "Adhane āture jiṇṇe,",
"cp9:13.2": "yācake addhike jane;",
"cp9:13.3": "Samaṇe brāhmaṇe khīṇe,",
"cp9:13.4": "deti dānaṃ akiñcane.",
"cp9:14.1": "Dasa māse dhārayitvāna,",
"cp9:14.2": "karonte puraṃ padakkhiṇaṃ;",
"cp9:14.3": "Vessānaṃ vīthiyā majjhe,",
"cp9:14.4": "janesi phussatī mamaṃ.",
"cp9:15.1": "Na mayhaṃ mattikaṃ nāmaṃ,",
"cp9:15.2": "napi pettikasambhavaṃ;",
"cp9:15.3": "Jātettha vessavīthiyā,",
"cp9:15.4": "tasmā vessantaro ahu.",
"cp9:16.1": "Yadāhaṃ dārako homi,",
"cp9:16.2": "jātiyā aṭṭhavassiko;",
"cp9:16.3": "Tadā nisajja pāsāde,",
"cp9:16.4": "dānaṃ dātuṃ vicintayiṃ.",
"cp9:17.1": "‘Hadayaṃ dadeyyaṃ cakkhuṃ,",
"cp9:17.2": "maṃsampi rudhirampi ca;",
"cp9:17.3": "Dadeyyaṃ kāyaṃ sāvetvā,",
"cp9:17.4": "yadi koci yācaye mamaṃ’.",
"cp9:18.1": "Sabhāvaṃ cintayantassa,",
"cp9:18.2": "akampitamasaṇṭhitaṃ;",
"cp9:18.3": "Akampi tattha pathavī,",
"cp9:18.4": "sineruvanavaṭaṃsakā.",
"cp9:19.1": "Anvaddhamāse pannarase,",
"cp9:19.2": "puṇṇamāse uposathe;",
"cp9:19.3": "Paccayaṃ nāgamāruyha,",
"cp9:19.4": "dānaṃ dātuṃ upāgamiṃ.",
"cp9:20.1": "Kaliṅgaraṭṭhavisayā,",
"cp9:20.2": "brāhmaṇā upagañchu maṃ;",
"cp9:20.3": "Ayācuṃ maṃ hatthināgaṃ,",
"cp9:20.4": "dhaññaṃ maṅgalasammataṃ.",
"cp9:21.1": "‘Avuṭṭhiko janapado,",
"cp9:21.2": "dubbhikkho chātako mahā;",
"cp9:21.3": "Dadāhi pavaraṃ nāgaṃ,",
"cp9:21.4": "sabbasetaṃ gajuttamaṃ’.",
"cp9:22.1": "Dadāmi na vikampāmi,",
"cp9:22.2": "yaṃ maṃ yācanti brāhmaṇā;",
"cp9:22.3": "Santaṃ nappatigūhāmi,",
"cp9:22.4": "dāne me ramate mano.",
"cp9:23.1": "Na me yācakamanuppatte,",
"cp9:23.2": "paṭikkhepo anucchavo;",
"cp9:23.3": "Mā me bhijji samādānaṃ,",
"cp9:23.4": "dassāmi vipulaṃ gajaṃ.",
"cp9:24.1": "Nāgaṃ gahetvā soṇḍāya,",
"cp9:24.2": "bhiṅgāre ratanāmaye;",
"cp9:24.3": "Jalaṃ hatthe ākiritvā,",
"cp9:24.4": "brāhmaṇānaṃ adaṃ gajaṃ.",
"cp9:25.1": "Punāparaṃ dadantassa,",
"cp9:25.2": "sabbasetaṃ gajuttamaṃ;",
"cp9:25.3": "Tadāpi pathavī kampi,",
"cp9:25.4": "sineruvanavaṭaṃsakā.",
"cp9:26.1": "Tassa nāgassa dānena,",
"cp9:26.2": "sivayo kuddhā samāgatā;",
"cp9:26.3": "Pabbājesuṃ sakā raṭṭhā,",
"cp9:26.4": "‘vaṅkaṃ gacchatu pabbataṃ’.",
"cp9:27.1": "Tesaṃ nicchubhamānānaṃ,",
"cp9:27.2": "akampitamasaṇṭhitaṃ;",
"cp9:27.3": "Mahādānaṃ pavattetuṃ,",
"cp9:27.4": "ekaṃ varamayācisaṃ.",
"cp9:28.1": "Yācitā sivayo sabbe,",
"cp9:28.2": "ekaṃ varamadaṃsu me;",
"cp9:28.3": "Sāvayitvā kaṇṇabheriṃ,",
"cp9:28.4": "mahādānaṃ dadāmahaṃ.",
"cp9:29.1": "Athettha vattatī saddo,",
"cp9:29.2": "tumulo bheravo mahā;",
"cp9:29.3": "Dānenimaṃ nīharanti,",
"cp9:29.4": "puna dānaṃ dadātayaṃ.",
"cp9:30.1": "Hatthiṃ asse rathe datvā,",
"cp9:30.2": "dāsiṃ dāsaṃ gavaṃ dhanaṃ;",
"cp9:30.3": "Mahādānaṃ daditvāna,",
"cp9:30.4": "nagarā nikkhamiṃ tadā.",
"cp9:31.1": "Nikkhamitvāna nagarā,",
"cp9:31.2": "nivattitvā vilokite;",
"cp9:31.3": "Tadāpi pathavī kampi,",
"cp9:31.4": "sineruvanavaṭaṃsakā.",
"cp9:32.1": "Catuvāhiṃ rathaṃ datvā,",
"cp9:32.2": "ṭhatvā cātummahāpathe;",
"cp9:32.3": "Ekākiyo adutiyo,",
"cp9:32.4": "maddideviṃ idamabraviṃ.",
"cp9:33.1": "‘Tvaṃ maddi kaṇhaṃ gaṇhāhi,",
"cp9:33.2": "lahukā esā kaniṭṭhikā;",
"cp9:33.3": "Ahaṃ jāliṃ gahessāmi,",
"cp9:33.4": "garuko bhātiko hi so’.",
"cp9:34.1": "Padumaṃ puṇḍarīkaṃva,",
"cp9:34.2": "maddī kaṇhājinaggahī;",
"cp9:34.3": "Ahaṃ suvaṇṇabimbaṃva,",
"cp9:34.4": "jāliṃ khattiyamaggahiṃ.",
"cp9:35.1": "Abhijātā sukhumālā,",
"cp9:35.2": "khattiyā caturo janā;",
"cp9:35.3": "Visamaṃ samaṃ akkamantā,",
"cp9:35.4": "vaṅkaṃ gacchāma pabbataṃ.",
"cp9:36.1": "Ye keci manujā enti,",
"cp9:36.2": "anumagge paṭippathe;",
"cp9:36.3": "Maggante paṭipucchāma,",
"cp9:36.4": "‘kuhiṃ vaṅkantapabbato’.",
"cp9:37.1": "Te tattha amhe passitvā,",
"cp9:37.2": "karuṇaṃ giramudīrayuṃ;",
"cp9:37.3": "Dukkhante paṭivedenti,",
"cp9:37.4": "dūre vaṅkantapabbato.",
"cp9:38.1": "Yadi passanti pavane,",
"cp9:38.2": "dārakā phaline dume;",
"cp9:38.3": "Tesaṃ phalānaṃ hetumhi,",
"cp9:38.4": "uparodanti dārakā.",
"cp9:39.1": "Rodante dārake disvā,",
"cp9:39.2": "ubbiddhā vipulā dumā;",
"cp9:39.3": "Sayamevoṇamitvāna,",
"cp9:39.4": "upagacchanti dārake.",
"cp9:40.1": "Idaṃ acchariyaṃ disvā,",
"cp9:40.2": "abbhutaṃ lomahaṃsanaṃ;",
"cp9:40.3": "Sāhukāraṃ pavattesi,",
"cp9:40.4": "maddī sabbaṅgasobhanā.",
"cp9:41.1": "Accheraṃ vata lokasmiṃ,",
"cp9:41.2": "abbhutaṃ lomahaṃsanaṃ;",
"cp9:41.3": "Vessantarassa tejena,",
"cp9:41.4": "sayamevoṇatā dumā.",
"cp9:42.1": "Saṅkhipiṃsu pathaṃ yakkhā,",
"cp9:42.2": "anukampāya dārake;",
"cp9:42.3": "Nikkhantadivaseneva,",
"cp9:42.4": "cetaraṭṭhamupāgamuṃ.",
"cp9:43.1": "Saṭṭhirājasahassāni,",
"cp9:43.2": "tadā vasanti mātule;",
"cp9:43.3": "Sabbe pañjalikā hutvā,",
"cp9:43.4": "rodamānā upāgamuṃ.",
"cp9:44.1": "Tattha vattetvā sallāpaṃ,",
"cp9:44.2": "cetehi cetaputtehi;",
"cp9:44.3": "Te tato nikkhamitvāna,",
"cp9:44.4": "vaṅkaṃ agamu pabbataṃ.",
"cp9:45.1": "Āmantayitvā devindo,",
"cp9:45.2": "vissakammaṃ mahiddhikaṃ;",
"cp9:45.3": "Assamaṃ sukataṃ rammaṃ,",
"cp9:45.4": "paṇṇasālaṃ sumāpaya.",
"cp9:46.1": "Sakkassa vacanaṃ sutvā,",
"cp9:46.2": "vissakammo mahiddhiko;",
"cp9:46.3": "Assamaṃ sukataṃ rammaṃ,",
"cp9:46.4": "paṇṇasālaṃ sumāpayi.",
"cp9:47.1": "Ajjhogāhetvā pavanaṃ,",
"cp9:47.2": "appasaddaṃ nirākulaṃ;",
"cp9:47.3": "Caturo janā mayaṃ tattha,",
"cp9:47.4": "vasāma pabbatantare.",
"cp9:48.1": "Ahañca maddidevī ca,",
"cp9:48.2": "jālī kaṇhājinā cubho;",
"cp9:48.3": "Aññamaññaṃ sokanudā,",
"cp9:48.4": "vasāma assame tadā.",
"cp9:49.1": "Dārake anurakkhanto,",
"cp9:49.2": "asuñño homi assame;",
"cp9:49.3": "Maddī phalaṃ āharitvā,",
"cp9:49.4": "poseti sā tayo jane.",
"cp9:50.1": "Pavane vasamānassa,",
"cp9:50.2": "addhiko maṃ upāgami;",
"cp9:50.3": "Āyāci puttake mayhaṃ,",
"cp9:50.4": "jāliṃ kaṇhājinaṃ cubho.",
"cp9:51.1": "Yācakaṃ upagataṃ disvā,",
"cp9:51.2": "hāso me upapajjatha;",
"cp9:51.3": "Ubho putte gahetvāna,",
"cp9:51.4": "adāsiṃ brāhmaṇe tadā.",
"cp9:52.1": "Sake putte cajantassa,",
"cp9:52.2": "jūjake brāhmaṇe yadā;",
"cp9:52.3": "Tadāpi pathavī kampi,",
"cp9:52.4": "sineruvanavaṭaṃsakā.",
"cp9:53.1": "Punadeva sakko oruyha,",
"cp9:53.2": "hutvā brāhmaṇasannibho;",
"cp9:53.3": "Āyāci maṃ maddideviṃ,",
"cp9:53.4": "sīlavantiṃ patibbataṃ.",
"cp9:54.1": "Maddiṃ hatthe gahetvāna,",
"cp9:54.2": "udakañjali pūriya;",
"cp9:54.3": "Pasannamanasaṅkappo,",
"cp9:54.4": "tassa maddiṃ adāsahaṃ.",
"cp9:55.1": "Maddiyā dīyamānāya,",
"cp9:55.2": "gagane devā pamoditā;",
"cp9:55.3": "Tadāpi pathavī kampi,",
"cp9:55.4": "sineruvanavaṭaṃsakā.",
"cp9:56.1": "Jāliṃ kaṇhājinaṃ dhītaṃ,",
"cp9:56.2": "maddideviṃ patibbataṃ;",
"cp9:56.3": "Cajamāno na cintesiṃ,",
"cp9:56.4": "bodhiyāyeva kāraṇā.",
"cp9:57.1": "Na me dessā ubho puttā,",
"cp9:57.2": "maddidevī na dessiyā;",
"cp9:57.3": "Sabbaññutaṃ piyaṃ mayhaṃ,",
"cp9:57.4": "tasmā piye adāsahaṃ.",
"cp9:58.1": "Punāparaṃ brahāraññe,",
"cp9:58.2": "mātāpitusamāgame;",
"cp9:58.3": "Karuṇaṃ paridevante,",
"cp9:58.4": "sallapante sukhaṃ dukhaṃ.",
"cp9:59.1": "Hirottappena garunā,",
"cp9:59.2": "ubhinnaṃ upasaṅkami;",
"cp9:59.3": "Tadāpi pathavī kampi,",
"cp9:59.4": "sineruvanavaṭaṃsakā.",
"cp9:60.1": "Punāparaṃ brahāraññā,",
"cp9:60.2": "nikkhamitvā sañātibhi;",
"cp9:60.3": "Pavisāmi puraṃ rammaṃ,",
"cp9:60.4": "jetuttaraṃ puruttamaṃ.",
"cp9:61.1": "Ratanāni satta vassiṃsu,",
"cp9:61.2": "mahāmegho pavassatha;",
"cp9:61.3": "Tadāpi pathavī kampi,",
"cp9:61.4": "sineruvanavaṭaṃsakā.",
"cp9:62.1": "Acetanāyaṃ pathavī,",
"cp9:62.2": "aviññāya sukhaṃ dukhaṃ;",
"cp9:62.3": "Sāpi dānabalā mayhaṃ,",
"cp9:62.4": "sattakkhattuṃ pakampathā”ti.",
"cp9:63.1": "Vessantaracariyaṃ navamaṃ."
}