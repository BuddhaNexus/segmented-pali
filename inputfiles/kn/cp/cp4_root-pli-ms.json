{
"cp4:1.1": "Cariyāpiṭaka",
"cp4:2.1": "Akittivagga",
"cp4:3.1": "Dānapāramī 4",
"cp4:4.1": "Mahāsudassanacariya",
"cp4:5.1": "“Kusāvatimhi nagare,",
"cp4:5.2": "yadā āsiṃ mahīpati;",
"cp4:5.3": "Mahāsudassano nāma,",
"cp4:5.4": "cakkavattī mahabbalo.",
"cp4:6.1": "Tatthāhaṃ divase tikkhattuṃ,",
"cp4:6.2": "ghosāpemi tahiṃ tahiṃ;",
"cp4:6.3": "‘Ko kiṃ icchati pattheti,",
"cp4:6.4": "kassa kiṃ dīyatū dhanaṃ.",
"cp4:7.1": "Ko chātako ko tasito,",
"cp4:7.2": "ko mālaṃ ko vilepanaṃ;",
"cp4:7.3": "Nānārattāni vatthāni,",
"cp4:7.4": "ko naggo paridahissati.",
"cp4:8.1": "Ko pathe chattamādeti,",
"cp4:8.2": "kopāhanā mudū subhā’;",
"cp4:8.3": "Iti sāyañca pāto ca,",
"cp4:8.4": "ghosāpemi tahiṃ tahiṃ.",
"cp4:9.1": "Na taṃ dasasu ṭhānesu,",
"cp4:9.2": "napi ṭhānasatesu vā;",
"cp4:9.3": "Anekasataṭhānesu,",
"cp4:9.4": "paṭiyattaṃ yācake dhanaṃ.",
"cp4:10.1": "Divā vā yadi vā rattiṃ,",
"cp4:10.2": "yadi eti vanibbako;",
"cp4:10.3": "Laddhā yadicchakaṃ bhogaṃ,",
"cp4:10.4": "pūrahatthova gacchati.",
"cp4:11.1": "Evarūpaṃ mahādānaṃ,",
"cp4:11.2": "Adāsiṃ yāvajīvikaṃ;",
"cp4:11.3": "Napāhaṃ dessaṃ dhanaṃ dammi,",
"cp4:11.4": "Napi natthi nicayo mayi.",
"cp4:12.1": "Yathāpi āturo nāma,",
"cp4:12.2": "rogato parimuttiyā;",
"cp4:12.3": "Dhanena vejjaṃ tappetvā,",
"cp4:12.4": "rogato parimuccati.",
"cp4:13.1": "Tathevāhaṃ jānamāno,",
"cp4:13.2": "paripūretumasesato;",
"cp4:13.3": "Ūnamanaṃ pūrayituṃ,",
"cp4:13.4": "demi dānaṃ vanibbake;",
"cp4:13.5": "Nirālayo apaccāso,",
"cp4:13.6": "sambodhimanupattiyā”ti.",
"cp4:14.1": "Mahāsudassanacariyaṃ catutthaṃ."
}