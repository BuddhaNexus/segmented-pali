{
  "cp4:0.1": "Cariyāpiṭaka ",
  "cp4:0.2": "Akittivagga ",
  "cp4:0.3": "Dānapāramī 4 ",
  "cp4:0.4": "Mahāsudassanacariya ",
  "cp4:1.1": "“Kusāvatimhi nagare, ",
  "cp4:1.2": "yadā āsiṁ mahīpati; ",
  "cp4:1.3": "Mahāsudassano nāma, ",
  "cp4:1.4": "cakkavattī mahabbalo. ",
  "cp4:2.1": "Tatthāhaṁ divase tikkhattuṁ, ",
  "cp4:2.2": "ghosāpemi tahiṁ tahiṁ; ",
  "cp4:2.3": "‘Ko kiṁ icchati pattheti, ",
  "cp4:2.4": "kassa kiṁ dīyatū dhanaṁ. ",
  "cp4:3.1": "Ko chātako ko tasito, ",
  "cp4:3.2": "ko mālaṁ ko vilepanaṁ; ",
  "cp4:3.3": "Nānārattāni vatthāni, ",
  "cp4:3.4": "ko naggo paridahissati. ",
  "cp4:4.1": "Ko pathe chattamādeti, ",
  "cp4:4.2": "kopāhanā mudū subhā’; ",
  "cp4:4.3": "Iti sāyañca pāto ca, ",
  "cp4:4.4": "ghosāpemi tahiṁ tahiṁ. ",
  "cp4:5.1": "Na taṁ dasasu ṭhānesu, ",
  "cp4:5.2": "napi ṭhānasatesu vā; ",
  "cp4:5.3": "Anekasataṭhānesu, ",
  "cp4:5.4": "paṭiyattaṁ yācake dhanaṁ. ",
  "cp4:6.1": "Divā vā yadi vā rattiṁ, ",
  "cp4:6.2": "yadi eti vanibbako; ",
  "cp4:6.3": "Laddhā yadicchakaṁ bhogaṁ, ",
  "cp4:6.4": "pūrahatthova gacchati. ",
  "cp4:7.1": "Evarūpaṁ mahādānaṁ, ",
  "cp4:7.2": "Adāsiṁ yāvajīvikaṁ; ",
  "cp4:7.3": "Napāhaṁ dessaṁ dhanaṁ dammi, ",
  "cp4:7.4": "Napi natthi nicayo mayi. ",
  "cp4:8.1": "Yathāpi āturo nāma, ",
  "cp4:8.2": "rogato parimuttiyā; ",
  "cp4:8.3": "Dhanena vejjaṁ tappetvā, ",
  "cp4:8.4": "rogato parimuccati. ",
  "cp4:9.1": "Tathevāhaṁ jānamāno, ",
  "cp4:9.2": "paripūretumasesato; ",
  "cp4:9.3": "Ūnamanaṁ pūrayituṁ, ",
  "cp4:9.4": "demi dānaṁ vanibbake; ",
  "cp4:9.5": "Nirālayo apaccāso, ",
  "cp4:9.6": "sambodhimanupattiyā”ti. ",
  "cp4:10.1": "Mahāsudassanacariyaṁ catutthaṁ. "
}