{
"kp1:1.1": "Khuddakapāṭha",
"kp1:2.1": "1. Saraṇattaya",
"kp1:3.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
"kp1:4.1": "Buddhaṃ saraṇaṃ gacchāmi,",
"kp1:4.2": "Dhammaṃ saraṇaṃ gacchāmi,",
"kp1:4.3": "Saṃghaṃ saraṇaṃ gacchāmi.",
"kp1:5.1": "Dutiyampi buddhaṃ saraṇaṃ gacchāmi,",
"kp1:5.2": "Dutiyampi dhammaṃ saraṇaṃ gacchāmi,",
"kp1:5.3": "Dutiyampi saṃghaṃ saraṇaṃ gacchāmi.",
"kp1:6.1": "Tatiyampi buddhaṃ saraṇaṃ gacchāmi,",
"kp1:6.2": "Tatiyampi dhammaṃ saraṇaṃ gacchāmi,",
"kp1:6.3": "Tatiyampi saṃghaṃ saraṇaṃ gacchāmi.",
"kp1:7.1": "Saraṇattayaṃ."
}