{
"kp5:1.1": "Khuddakapāṭha",
"kp5:2.1": "5. Maṅgalasutta",
"kp5:3.1": "Evaṃ me sutaṃ—",
"kp5:3.2": "ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
"kp5:3.3": "Atha kho aññatarā devatā abhikkantāya rattiyā abhikkantavaṇṇā kevalakappaṃ jetavanaṃ obhāsetvā yena bhagavā tenupasaṅkami;",
"kp5:3.4": "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi.",
"kp5:3.5": "Ekamantaṃ ṭhitā kho sā devatā bhagavantaṃ gāthāya ajjhabhāsi—",
"kp5:4.1": "“Bahū devā manussā ca,",
"kp5:4.2": "maṅgalāni acintayuṃ;",
"kp5:4.3": "Ākaṅkhamānā sotthānaṃ,",
"kp5:4.4": "brūhi maṅgalamuttamaṃ”.",
"kp5:5.1": "“Asevanā ca bālānaṃ,",
"kp5:5.2": "paṇḍitānañca sevanā;",
"kp5:5.3": "Pūjā ca pūjaneyyānaṃ,",
"kp5:5.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:6.1": "Patirūpadesavāso ca,",
"kp5:6.2": "pubbe ca katapuññatā;",
"kp5:6.3": "Attasammāpaṇidhi ca,",
"kp5:6.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:7.1": "Bāhusaccañca sippañca,",
"kp5:7.2": "vinayo ca susikkhito;",
"kp5:7.3": "Subhāsitā ca yā vācā,",
"kp5:7.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:8.1": "Mātāpituupaṭṭhānaṃ,",
"kp5:8.2": "puttadārassa saṅgaho;",
"kp5:8.3": "Anākulā ca kammantā,",
"kp5:8.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:9.1": "Dānañca dhammacariyā ca,",
"kp5:9.2": "ñātakānañca saṅgaho;",
"kp5:9.3": "Anavajjāni kammāni,",
"kp5:9.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:10.1": "Āratī viratī pāpā,",
"kp5:10.2": "majjapānā ca saṃyamo;",
"kp5:10.3": "Appamādo ca dhammesu,",
"kp5:10.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:11.1": "Gāravo ca nivāto ca,",
"kp5:11.2": "santuṭṭhi ca kataññutā;",
"kp5:11.3": "Kālena dhammassavanaṃ,",
"kp5:11.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:12.1": "Khantī ca sovacassatā,",
"kp5:12.2": "samaṇānañca dassanaṃ;",
"kp5:12.3": "Kālena dhammasākacchā,",
"kp5:12.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:13.1": "Tapo ca brahmacariyañca,",
"kp5:13.2": "ariyasaccāna dassanaṃ;",
"kp5:13.3": "Nibbānasacchikiriyā ca,",
"kp5:13.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:14.1": "Phuṭṭhassa lokadhammehi,",
"kp5:14.2": "cittaṃ yassa na kampati;",
"kp5:14.3": "Asokaṃ virajaṃ khemaṃ,",
"kp5:14.4": "etaṃ maṅgalamuttamaṃ.",
"kp5:15.1": "Etādisāni katvāna,",
"kp5:15.2": "Sabbattha maparājitā;",
"kp5:15.3": "Sabbattha sotthiṃ gacchanti,",
"kp5:15.4": "Taṃ tesaṃ maṅgalamuttaman”ti.",
"kp5:16.1": "Maṅgalasuttaṃ."
}