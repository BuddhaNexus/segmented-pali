{
"iti2:1.1": "Itivuttaka 2",
"iti2:2.1": "Dosasutta",
"iti2:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti2:4.1": "“Ekadhammaṃ, bhikkhave, pajahatha;",
"iti2:4.2": "ahaṃ vo pāṭibhogo anāgāmitāya.",
"iti2:4.3": "Katamaṃ ekadhammaṃ?",
"iti2:4.4": "Dosaṃ, bhikkhave, ekadhammaṃ pajahatha;",
"iti2:4.5": "ahaṃ vo pāṭibhogo anāgāmitāyā”ti.",
"iti2:4.6": "Etamatthaṃ bhagavā avoca.",
"iti2:4.7": "Tatthetaṃ iti vuccati:",
"iti2:5.1": "“Yena dosena duṭṭhāse,",
"iti2:5.2": "sattā gacchanti duggatiṃ;",
"iti2:5.3": "Taṃ dosaṃ sammadaññāya,",
"iti2:5.4": "pajahanti vipassino;",
"iti2:5.5": "Pahāya na punāyanti,",
"iti2:5.6": "imaṃ lokaṃ kudācanan”ti.",
"iti2:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti2:7.1": "Dutiyaṃ."
}