{
"iti88:1.1": "Itivuttaka 88",
"iti88:2.1": "Antarāmalasutta",
"iti88:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti88:4.1": "“Tayome, bhikkhave, antarāmalā antarāamittā antarāsapattā antarāvadhakā antarāpaccatthikā.",
"iti88:4.2": "Katame tayo?",
"iti88:4.3": "Lobho, bhikkhave, antarāmalo antarāamitto antarāsapatto antarāvadhako antarāpaccatthiko.",
"iti88:4.4": "Doso, bhikkhave, antarāmalo antarāamitto antarāsapatto antarāvadhako antarāpaccatthiko.",
"iti88:4.5": "Moho, bhikkhave, antarāmalo antarāamitto antarāsapatto antarāvadhako antarāpaccatthiko.",
"iti88:4.6": "Ime kho, bhikkhave, tayo antarāmalā antarāamittā antarāsapattā antarāvadhakā antarāpaccatthikā”ti.",
"iti88:4.7": "Etamatthaṃ bhagavā avoca.",
"iti88:4.8": "Tatthetaṃ iti vuccati:",
"iti88:5.1": "“Anatthajanano lobho,",
"iti88:5.2": "lobho cittappakopano;",
"iti88:5.3": "Bhayamantarato jātaṃ,",
"iti88:5.4": "taṃ jano nāvabujjhati.",
"iti88:6.1": "Luddho atthaṃ na jānāti,",
"iti88:6.2": "luddho dhammaṃ na passati;",
"iti88:6.3": "Andhatamaṃ tadā hoti,",
"iti88:6.4": "yaṃ lobho sahate naraṃ.",
"iti88:7.1": "Yo ca lobhaṃ pahantvāna,",
"iti88:7.2": "lobhaneyye na lubbhati;",
"iti88:7.3": "Lobho pahīyate tamhā,",
"iti88:7.4": "udabindūva pokkharā.",
"iti88:8.1": "Anatthajanano doso,",
"iti88:8.2": "doso cittappakopano;",
"iti88:8.3": "Bhayamantarato jātaṃ,",
"iti88:8.4": "taṃ jano nāvabujjhati.",
"iti88:9.1": "Duṭṭho atthaṃ na jānāti,",
"iti88:9.2": "duṭṭho dhammaṃ na passati;",
"iti88:9.3": "Andhatamaṃ tadā hoti,",
"iti88:9.4": "yaṃ doso sahate naraṃ.",
"iti88:10.1": "Yo ca dosaṃ pahantvāna,",
"iti88:10.2": "dosaneyye na dussati;",
"iti88:10.3": "Doso pahīyate tamhā,",
"iti88:10.4": "tālapakkaṃva bandhanā.",
"iti88:11.1": "Anatthajanano moho,",
"iti88:11.2": "moho cittappakopano;",
"iti88:11.3": "Bhayamantarato jātaṃ,",
"iti88:11.4": "taṃ jano nāvabujjhati.",
"iti88:12.1": "Mūḷho atthaṃ na jānāti,",
"iti88:12.2": "mūḷho dhammaṃ na passati;",
"iti88:12.3": "Andhatamaṃ tadā hoti,",
"iti88:12.4": "yaṃ moho sahate naraṃ.",
"iti88:13.1": "Yo ca mohaṃ pahantvāna,",
"iti88:13.2": "mohaneyye na muyhati;",
"iti88:13.3": "Mohaṃ vihanti so sabbaṃ,",
"iti88:13.4": "ādiccovudayaṃ taman”ti.",
"iti88:14.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti88:15.1": "Navamaṃ."
}