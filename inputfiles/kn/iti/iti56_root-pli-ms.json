{
"iti56:1.1": "Itivuttaka 56",
"iti56:2.1": "Paṭhamaāsavasutta",
"iti56:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti56:4.1": "“Tayome, bhikkhave, āsavā.",
"iti56:4.2": "Katame tayo?",
"iti56:4.3": "Kāmāsavo, bhavāsavo, avijjāsavo—",
"iti56:4.4": "ime kho, bhikkhave, tayo āsavā”ti.",
"iti56:4.5": "Etamatthaṃ bhagavā avoca.",
"iti56:4.6": "Tatthetaṃ iti vuccati:",
"iti56:5.1": "“Samāhito sampajāno,",
"iti56:5.2": "sato buddhassa sāvako;",
"iti56:5.3": "Āsave ca pajānāti,",
"iti56:5.4": "āsavānañca sambhavaṃ.",
"iti56:6.1": "Yattha cetā nirujjhanti,",
"iti56:6.2": "maggañca khayagāminaṃ;",
"iti56:6.3": "Āsavānaṃ khayā bhikkhu,",
"iti56:6.4": "nicchāto parinibbuto”ti.",
"iti56:7.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti56:8.1": "Sattamaṃ."
}