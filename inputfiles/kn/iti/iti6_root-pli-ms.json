{
"iti6:1.1": "Itivuttaka 6",
"iti6:2.1": "Mānasutta",
"iti6:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti6:4.1": "“Ekadhammaṃ, bhikkhave, pajahatha;",
"iti6:4.2": "ahaṃ vo pāṭibhogo anāgāmitāya.",
"iti6:4.3": "Katamaṃ ekadhammaṃ?",
"iti6:4.4": "Mānaṃ, bhikkhave, ekadhammaṃ pajahatha;",
"iti6:4.5": "ahaṃ vo pāṭibhogo anāgāmitāyā”ti.",
"iti6:4.6": "Etamatthaṃ bhagavā avoca.",
"iti6:4.7": "Tatthetaṃ iti vuccati:",
"iti6:5.1": "“Yena mānena mattāse,",
"iti6:5.2": "sattā gacchanti duggatiṃ;",
"iti6:5.3": "Taṃ mānaṃ sammadaññāya,",
"iti6:5.4": "pajahanti vipassino;",
"iti6:5.5": "Pahāya na punāyanti,",
"iti6:5.6": "imaṃ lokaṃ kudācanan”ti.",
"iti6:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti6:7.1": "Chaṭṭhaṃ."
}