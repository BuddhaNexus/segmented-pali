{
"iti51:1.1": "Itivuttaka 51",
"iti51:2.1": "Dhātusutta",
"iti51:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti51:4.1": "“Tisso imā, bhikkhave, dhātuyo.",
"iti51:4.2": "Katamā tisso?",
"iti51:4.3": "Rūpadhātu, arūpadhātu, nirodhadhātu—",
"iti51:4.4": "imā kho, bhikkhave, tisso dhātuyo”ti.",
"iti51:4.5": "Etamatthaṃ bhagavā avoca.",
"iti51:4.6": "Tatthetaṃ iti vuccati:",
"iti51:5.1": "“Rūpadhātuṃ pariññāya,",
"iti51:5.2": "āruppesu asaṇṭhitā;",
"iti51:5.3": "Nirodhe ye vimuccanti,",
"iti51:5.4": "te janā maccuhāyino.",
"iti51:6.1": "Kāyena amataṃ dhātuṃ,",
"iti51:6.2": "phusayitvā nirūpadhiṃ;",
"iti51:6.3": "Upadhippaṭinissaggaṃ,",
"iti51:6.4": "sacchikatvā anāsavo;",
"iti51:6.5": "Deseti sammāsambuddho,",
"iti51:6.6": "asokaṃ virajaṃ padan”ti.",
"iti51:7.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti51:8.1": "Dutiyaṃ."
}