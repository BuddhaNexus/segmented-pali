{
"iti1:1.1": "Itivuttaka 1",
"iti1:2.1": "Lobhasutta",
"iti1:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti1:4.1": "“Ekadhammaṃ, bhikkhave, pajahatha;",
"iti1:4.2": "ahaṃ vo pāṭibhogo anāgāmitāya.",
"iti1:4.3": "Katamaṃ ekadhammaṃ?",
"iti1:4.4": "Lobhaṃ, bhikkhave, ekadhammaṃ pajahatha;",
"iti1:4.5": "ahaṃ vo pāṭibhogo anāgāmitāyā”ti.",
"iti1:4.6": "Etamatthaṃ bhagavā avoca.",
"iti1:4.7": "Tatthetaṃ iti vuccati:",
"iti1:5.1": "“Yena lobhena luddhāse,",
"iti1:5.2": "sattā gacchanti duggatiṃ;",
"iti1:5.3": "Taṃ lobhaṃ sammadaññāya,",
"iti1:5.4": "pajahanti vipassino;",
"iti1:5.5": "Pahāya na punāyanti,",
"iti1:5.6": "imaṃ lokaṃ kudācanan”ti.",
"iti1:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti1:7.1": "Paṭhamaṃ."
}