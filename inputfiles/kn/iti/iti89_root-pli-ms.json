{
"iti89:1.1": "Itivuttaka 89",
"iti89:2.1": "Devadattasutta",
"iti89:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti89:4.1": "“Tīhi, bhikkhave, asaddhammehi abhibhūto pariyādinnacitto devadatto āpāyiko nerayiko kappaṭṭho atekiccho.",
"iti89:4.2": "Katamehi tīhi?",
"iti89:4.3": "Pāpicchatāya, bhikkhave, abhibhūto pariyādinnacitto devadatto āpāyiko nerayiko kappaṭṭho atekiccho.",
"iti89:4.4": "Pāpamittatāya, bhikkhave, abhibhūto pariyādinnacitto devadatto āpāyiko nerayiko kappaṭṭho atekiccho.",
"iti89:4.5": "Sati kho pana uttarikaraṇīye oramattakena visesādhigamena antarā vosānaṃ āpādi.",
"iti89:4.6": "Imehi kho, bhikkhave, tīhi asaddhammehi abhibhūto pariyādinnacitto devadatto āpāyiko nerayiko kappaṭṭho atekiccho”ti.",
"iti89:4.7": "Etamatthaṃ bhagavā avoca.",
"iti89:4.8": "Tatthetaṃ iti vuccati:",
"iti89:5.1": "“Mā jātu koci lokasmiṃ,",
"iti89:5.2": "pāpiccho udapajjatha;",
"iti89:5.3": "Tadamināpi jānātha,",
"iti89:5.4": "pāpicchānaṃ yathā gati.",
"iti89:6.1": "Paṇḍitoti samaññāto,",
"iti89:6.2": "bhāvitattoti sammato;",
"iti89:6.3": "Jalaṃva yasasā aṭṭhā,",
"iti89:6.4": "devadattoti vissuto.",
"iti89:7.1": "So samānamanuciṇṇo,",
"iti89:7.2": "āsajja naṃ tathāgataṃ;",
"iti89:7.3": "Avīcinirayaṃ patto,",
"iti89:7.4": "catudvāraṃ bhayānakaṃ.",
"iti89:8.1": "Aduṭṭhassa hi yo dubbhe,",
"iti89:8.2": "pāpakammaṃ akubbato;",
"iti89:8.3": "Tameva pāpaṃ phusati,",
"iti89:8.4": "duṭṭhacittaṃ anādaraṃ.",
"iti89:9.1": "Samuddaṃ visakumbhena,",
"iti89:9.2": "yo maññeyya padūsituṃ;",
"iti89:9.3": "Na so tena padūseyya,",
"iti89:9.4": "bhesmā hi udadhi mahā.",
"iti89:10.1": "Evamevaṃ tathāgataṃ,",
"iti89:10.2": "yo vādena vihiṃsati;",
"iti89:10.3": "Sammaggataṃ santacittaṃ,",
"iti89:10.4": "vādo tamhi na rūhati.",
"iti89:11.1": "Tādisaṃ mittaṃ kubbetha,",
"iti89:11.2": "tañca seveyya paṇḍito;",
"iti89:11.3": "Yassa maggānugo bhikkhu,",
"iti89:11.4": "khayaṃ dukkhassa pāpuṇe”ti.",
"iti89:12.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti89:13.1": "Dasamaṃ.",
"iti89:14.1": "Catuttho vaggo.",
"iti89:15.1": "Vitakkāsakkārasadda,",
"iti89:15.2": "cavanaloke asubhaṃ;",
"iti89:15.3": "Dhammaandhakāramalaṃ,",
"iti89:15.4": "devadattena te dasāti."
}