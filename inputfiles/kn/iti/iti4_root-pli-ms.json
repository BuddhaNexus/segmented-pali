{
"iti4:1.1": "Itivuttaka 4",
"iti4:2.1": "Kodhasutta",
"iti4:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti4:4.1": "“Ekadhammaṃ, bhikkhave, pajahatha;",
"iti4:4.2": "ahaṃ vo pāṭibhogo anāgāmitāya.",
"iti4:4.3": "Katamaṃ ekadhammaṃ?",
"iti4:4.4": "Kodhaṃ, bhikkhave, ekadhammaṃ pajahatha;",
"iti4:4.5": "ahaṃ vo pāṭibhogo anāgāmitāyā”ti.",
"iti4:4.6": "Etamatthaṃ bhagavā avoca.",
"iti4:4.7": "Tatthetaṃ iti vuccati:",
"iti4:5.1": "“Yena kodhena kuddhāse,",
"iti4:5.2": "sattā gacchanti duggatiṃ;",
"iti4:5.3": "Taṃ kodhaṃ sammadaññāya,",
"iti4:5.4": "pajahanti vipassino;",
"iti4:5.5": "Pahāya na punāyanti,",
"iti4:5.6": "imaṃ lokaṃ kudācanan”ti.",
"iti4:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti4:7.1": "Catutthaṃ."
}