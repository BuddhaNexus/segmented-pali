{
"iti54:1.1": "Itivuttaka 54",
"iti54:2.1": "Paṭhamaesanāsutta",
"iti54:3.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
"iti54:4.1": "“Tisso imā, bhikkhave, esanā.",
"iti54:4.2": "Katamā tisso?",
"iti54:4.3": "Kāmesanā, bhavesanā, brahmacariyesanā—",
"iti54:4.4": "imā kho, bhikkhave, tisso esanā”ti.",
"iti54:4.5": "Etamatthaṃ bhagavā avoca.",
"iti54:4.6": "Tatthetaṃ iti vuccati:",
"iti54:5.1": "“Samāhito sampajāno,",
"iti54:5.2": "sato buddhassa sāvako;",
"iti54:5.3": "Esanā ca pajānāti,",
"iti54:5.4": "esanānañca sambhavaṃ.",
"iti54:6.1": "Yattha cetā nirujjhanti,",
"iti54:6.2": "maggañca khayagāminaṃ;",
"iti54:6.3": "Esanānaṃ khayā bhikkhu,",
"iti54:6.4": "nicchāto parinibbuto”ti.",
"iti54:7.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
"iti54:8.1": "Pañcamaṃ."
}