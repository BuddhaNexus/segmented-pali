{
"kv16.1:1.1": "Kathāvatthu",
"kv16.1:2.1": "Niggahapaṇṇāsaka",
"kv16.1:3.1": "Soḷasamavagga",
"kv16.1:4.1": "Niggahakathā",
"kv16.1:5.1": "Paro parassa cittaṃ niggaṇhātīti?",
"kv16.1:5.2": "Āmantā.",
"kv16.1:5.3": "Paro parassa cittaṃ “mā rajji”, “mā dussi”, “mā muyhi”, “mā kilissī”ti niggaṇhātīti?",
"kv16.1:5.4": "Na hevaṃ vattabbe … pe …",
"kv16.1:5.6": "paro parassa cittaṃ niggaṇhātīti?",
"kv16.1:5.7": "Āmantā.",
"kv16.1:5.8": "Paro parassa uppanno phasso “mā nirujjhī”ti niggaṇhātīti?",
"kv16.1:5.9": "Na hevaṃ vattabbe … pe …",
"kv16.1:5.11": "paro parassa uppannā vedanā … pe …",
"kv16.1:5.13": "uppannā saññā …",
"kv16.1:5.14": "uppannā cetanā …",
"kv16.1:5.15": "uppannaṃ cittaṃ …",
"kv16.1:5.16": "uppannā saddhā …",
"kv16.1:5.17": "uppannaṃ vīriyaṃ …",
"kv16.1:5.18": "uppannā sati …",
"kv16.1:5.19": "uppanno samādhi … pe …",
"kv16.1:5.21": "uppannā paññā “mā nirujjhī”ti niggaṇhātīti?",
"kv16.1:5.22": "Na hevaṃ vattabbe … pe ….",
"kv16.1:6.1": "Paro parassa cittaṃ niggaṇhātīti?",
"kv16.1:6.2": "Āmantā.",
"kv16.1:6.3": "Paro parassa atthāya rāgaṃ pajahati …",
"kv16.1:6.4": "dosaṃ pajahati … pe …",
"kv16.1:6.6": "anottappaṃ pajahatīti?",
"kv16.1:6.7": "Na hevaṃ vattabbe … pe ….",
"kv16.1:7.1": "Paro parassa cittaṃ niggaṇhātīti?",
"kv16.1:7.2": "Āmantā.",
"kv16.1:7.3": "Paro parassa atthāya maggaṃ bhāveti …",
"kv16.1:7.4": "satipaṭṭhānaṃ bhāveti … pe …",
"kv16.1:7.6": "bojjhaṅgaṃ bhāvetīti?",
"kv16.1:7.7": "Na hevaṃ vattabbe … pe ….",
"kv16.1:8.1": "Paro parassa cittaṃ niggaṇhātīti?",
"kv16.1:8.2": "Āmantā.",
"kv16.1:8.3": "Paro parassa atthāya dukkhaṃ parijānāti, samudayaṃ pajahati, nirodhaṃ sacchikaroti, maggaṃ bhāvetīti?",
"kv16.1:8.4": "Na hevaṃ vattabbe … pe ….",
"kv16.1:9.1": "Paro parassa cittaṃ niggaṇhātīti?",
"kv16.1:9.2": "Āmantā.",
"kv16.1:9.3": "Añño aññassa kārako, paraṃkataṃ sukhaṃ dukkhaṃ añño karoti añño paṭisaṃvedetīti?",
"kv16.1:9.4": "Na hevaṃ vattabbe … pe ….",
"kv16.1:10.1": "Paro parassa cittaṃ niggaṇhātīti?",
"kv16.1:10.2": "Āmantā.",
"kv16.1:10.3": "Nanu vuttaṃ bhagavatā—",
"kv16.1:11.1": "“Attanāva kataṃ pāpaṃ,",
"kv16.1:11.2": "attanā saṅkilissati;",
"kv16.1:11.3": "Attanā akataṃ pāpaṃ,",
"kv16.1:11.4": "attanāva visujjhati;",
"kv16.1:11.5": "Suddhi asuddhi paccattaṃ,",
"kv16.1:11.6": "nāñño aññaṃ visodhaye”ti.",
"kv16.1:12.1": "Attheva suttantoti?",
"kv16.1:12.2": "Āmantā.",
"kv16.1:12.3": "Tena hi na vattabbaṃ—",
"kv16.1:12.4": "“paro parassa cittaṃ niggaṇhātī”ti.",
"kv16.1:13.1": "☒ Na vattabbaṃ—",
"kv16.1:13.2": "“paro parassa cittaṃ niggaṇhātī”ti?",
"kv16.1:13.3": "Āmantā.",
"kv16.1:13.4": "Nanu atthi balappattā, atthi vasībhūtāti?",
"kv16.1:13.5": "Āmantā.",
"kv16.1:13.6": "Hañci atthi balappattā, atthi vasībhūtā, tena vata re vattabbe—",
"kv16.1:13.7": "“paro parassa cittaṃ niggaṇhātī”ti.",
"kv16.1:14.1": "Niggahakathā niṭṭhitā."
}