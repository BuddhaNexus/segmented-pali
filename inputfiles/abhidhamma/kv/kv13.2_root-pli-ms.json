{
"kv13.2:1.1": "Kathāvatthu",
"kv13.2:2.1": "Mahāpaṇṇāsaka",
"kv13.2:3.1": "Terasamavagga",
"kv13.2:4.1": "Kusalapaṭilābhakathā",
"kv13.2:5.1": "Kappaṭṭho kusalaṃ cittaṃ na paṭilabheyyāti?",
"kv13.2:5.2": "Āmantā.",
"kv13.2:5.3": "Kappaṭṭho dānaṃ dadeyyāti?",
"kv13.2:5.4": "Āmantā.",
"kv13.2:5.5": "Hañci kappaṭṭho dānaṃ dadeyya, no ca vata re vattabbe—",
"kv13.2:5.6": "“kappaṭṭho kusalaṃ cittaṃ na paṭilabheyyā”ti.",
"kv13.2:6.1": "Kappaṭṭho kusalaṃ cittaṃ na paṭilabheyyāti?",
"kv13.2:6.2": "Āmantā.",
"kv13.2:6.3": "Kappaṭṭho cīvaraṃ dadeyya … pe …",
"kv13.2:6.5": "piṇḍapātaṃ dadeyya … pe …",
"kv13.2:6.7": "senāsanaṃ dadeyya … pe …",
"kv13.2:6.9": "gilānapaccayabhesajjaparikkhāraṃ dadeyya …",
"kv13.2:6.10": "khādanīyaṃ dadeyya …",
"kv13.2:6.11": "bhojanīyaṃ dadeyya …",
"kv13.2:6.12": "pānīyaṃ dadeyya …",
"kv13.2:6.13": "cetiyaṃ vandeyya …",
"kv13.2:6.14": "cetiye mālaṃ āropeyya …",
"kv13.2:6.15": "gandhaṃ āropeyya …",
"kv13.2:6.16": "vilepanaṃ āropeyya … pe …",
"kv13.2:6.18": "cetiyaṃ abhidakkhiṇaṃ kareyyāti?",
"kv13.2:6.19": "Āmantā.",
"kv13.2:6.20": "Hañci kappaṭṭho cetiyaṃ abhidakkhiṇaṃ kareyya, no ca vata re vattabbe—",
"kv13.2:6.21": "“kappaṭṭho kusalaṃ cittaṃ na paṭilabheyyā”ti … pe ….",
"kv13.2:7.1": "☒ Kappaṭṭho kusalaṃ cittaṃ paṭilabheyyāti?",
"kv13.2:7.2": "Āmantā.",
"kv13.2:7.3": "Tato vuṭṭhānaṃ kusalaṃ cittaṃ paṭilabheyyāti?",
"kv13.2:7.4": "Āmantā.",
"kv13.2:7.5": "Rūpāvacaraṃ … pe …",
"kv13.2:7.7": "arūpāvacaraṃ … pe …",
"kv13.2:7.9": "lokuttaraṃ kusalaṃ cittaṃ paṭilabheyyāti?",
"kv13.2:7.10": "Na hevaṃ vattabbe … pe ….",
"kv13.2:8.1": "Kusalapaṭilābhakathā niṭṭhitā."
}