{
"kv13.1:1.1": "Kathāvatthu",
"kv13.1:2.1": "Anusayapaṇṇāsaka",
"kv13.1:3.1": "Terasamavagga",
"kv13.1:4.1": "Kappaṭṭhakathā",
"kv13.1:5.1": "Kappaṭṭho kappaṃ tiṭṭheyyāti?",
"kv13.1:5.2": "Āmantā.",
"kv13.1:5.3": "Kappo ca saṇṭhāti buddho ca loke uppajjatīti?",
"kv13.1:5.4": "Na hevaṃ vattabbe … pe ….",
"kv13.1:5.6": "Kappaṭṭho kappaṃ tiṭṭheyyāti?",
"kv13.1:5.7": "Āmantā.",
"kv13.1:5.8": "Kappo ca saṇṭhāti saṃgho ca bhijjatīti?",
"kv13.1:5.9": "Na hevaṃ vattabbe … pe …",
"kv13.1:5.11": "kappaṭṭho kappaṃ tiṭṭheyyāti?",
"kv13.1:5.12": "Āmantā.",
"kv13.1:5.13": "Kappo ca saṇṭhāti kappaṭṭho ca kappaṭṭhiyaṃ kammaṃ karotīti?",
"kv13.1:5.14": "Na hevaṃ vattabbe … pe …",
"kv13.1:5.16": "kappaṭṭho kappaṃ tiṭṭheyyāti?",
"kv13.1:5.17": "Āmantā.",
"kv13.1:5.18": "Kappo ca saṇṭhāti kappaṭṭho ca puggalo kālaṃ karotīti?",
"kv13.1:5.19": "Na hevaṃ vattabbe … pe ….",
"kv13.1:6.1": "Kappaṭṭho kappaṃ tiṭṭheyyāti?",
"kv13.1:6.2": "Āmantā.",
"kv13.1:6.3": "Atītaṃ kappaṃ tiṭṭheyya, anāgataṃ kappaṃ tiṭṭheyyāti?",
"kv13.1:6.4": "Na hevaṃ vattabbe … pe …",
"kv13.1:6.6": "kappaṭṭho kappaṃ tiṭṭheyyāti?",
"kv13.1:6.7": "Āmantā.",
"kv13.1:6.8": "Dve kappe tiṭṭheyya …",
"kv13.1:6.9": "tayo kappe tiṭṭheyya …",
"kv13.1:6.10": "cattāro kappe tiṭṭheyyāti?",
"kv13.1:6.11": "Na hevaṃ vattabbe … pe ….",
"kv13.1:7.1": "Kappaṭṭho kappaṃ tiṭṭheyyāti?",
"kv13.1:7.2": "Āmantā.",
"kv13.1:7.3": "Kappaṭṭho kappe ḍayhante kattha gacchatīti?",
"kv13.1:7.4": "Aññaṃ lokadhātuṃ gacchatīti.",
"kv13.1:7.5": "Mato gacchati, vehāsaṃ gacchatīti?",
"kv13.1:7.6": "Mato gacchatīti.",
"kv13.1:7.7": "Kappaṭṭhiyaṃ kammaṃ aparāpariyavepakkanti?",
"kv13.1:7.8": "Na hevaṃ vattabbe … pe …",
"kv13.1:7.10": "vehāsaṃ gacchatīti?",
"kv13.1:7.11": "Āmantā.",
"kv13.1:7.12": "Kappaṭṭho iddhimāti?",
"kv13.1:7.13": "Na hevaṃ vattabbe … pe …",
"kv13.1:7.15": "kappaṭṭho iddhimāti?",
"kv13.1:7.16": "Āmantā.",
"kv13.1:7.17": "Kappaṭṭhena chandiddhipādo bhāvito vīriyiddhipādo bhāvito cittiddhipādo bhāvito vīmaṃsiddhipādo bhāvitoti?",
"kv13.1:7.18": "Na hevaṃ vattabbe … pe ….",
"kv13.1:8.1": "☒ Na vattabbaṃ—",
"kv13.1:8.2": "“kappaṭṭho kappaṃ tiṭṭheyyā”ti?",
"kv13.1:8.3": "Āmantā.",
"kv13.1:8.4": "Nanu vuttaṃ bhagavatā—",
"kv13.1:9.1": "“Āpāyiko nerayiko,",
"kv13.1:9.2": "Kappaṭṭho saṃghabhedako;",
"kv13.1:9.3": "Vaggarato adhammaṭṭho,",
"kv13.1:9.4": "Yogakkhemā padhaṃsati;",
"kv13.1:9.5": "Saṃghaṃ samaggaṃ bhetvāna,",
"kv13.1:9.6": "Kappaṃ nirayamhi paccatī”ti.",
"kv13.1:10.1": "Attheva suttantoti?",
"kv13.1:10.2": "Āmantā.",
"kv13.1:10.3": "Tena hi kappaṭṭho kappaṃ tiṭṭheyyāti.",
"kv13.1:11.1": "Kappaṭṭhakathā niṭṭhitā."
}