{
    "ai-thag1.30:0.1_0": "Verses of the Senior Monks",
    "ai-thag1.30:0.2_0": "The Book of the Ones",
    "ai-thag1.30:0.3_0": "Chapter Three",
    "ai-thag1.30:0.4_0": "1.30. Uttiya (1st)",
    "ai-thag1.30:1.1_0": "When I was ill in the past,",
    "ai-thag1.30:1.2_0": "mindfulness arose in me.",
    "ai-thag1.30:1.3_0": "Now I am ill once more—",
    "ai-thag1.30:1.4_0": "it’s time for me to be heedful.",
    "ai-thag1.30:1.5_0": "…",
    "ai-thag1.30:1.6_0": "a senior monk,",
    "ai-thag1.30:1.7_0": "Third: incomplete and impaired.",
    "ai-thag1.30:2.0_0": "Inspiring places",
    "ai-thag1.30:2.1_0": "Nighta, Citta,",
    "ai-thag1.30:2.2_0": "The senior.",
    "ai-thag1.30:2.3_0": "Hearing Nandaka, the senior,",
    "ai-thag1.30:2.4_0": "a senior monk Lomasakaṅgiya,",
    "ai-thag1.30:2.5_0": "Jambugāmikaputta and Sambara,",
    "ai-thag1.30:2.6_0": "and making him a hermit."
}