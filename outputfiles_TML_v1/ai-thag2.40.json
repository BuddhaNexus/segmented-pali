{
    "ai-thag2.40:0.1_0": "Verses of the Senior Monks",
    "ai-thag2.40:0.2_0": "The Book of the Twos",
    "ai-thag2.40:0.3_0": "Chapter Four",
    "ai-thag2.40:0.4_0": "2.40. Kappaṭakura",
    "ai-thag2.40:1.1_0": "This fellow, “Rag-rice”, he sure is a rag!",
    "ai-thag2.40:1.2_0": "Into the vase of the deathless, polished and overflowing,",
    "ai-thag2.40:1.3_0": "sufficient teaching has been poured;",
    "ai-thag2.40:1.4_0": "the path to build up absorptions has been laid out.",
    "ai-thag2.40:2.1_0": "Don’t nod off, Rag—",
    "ai-thag2.40:2.2_0": "I’ll smack your ear!",
    "ai-thag2.40:2.3_0": "Nodding off in the middle of the Saṅgha?",
    "ai-thag2.40:2.4_0": "You know no bounds.",
    "ai-thag2.40:2.5_0": "…",
    "ai-thag2.40:2.6_0": "a senior monk,",
    "ai-thag2.40:2.7_0": "Fourth: graceful and thoughtful.",
    "ai-thag2.40:3.0_0": "Inspiring places",
    "ai-thag2.40:3.1_0": "Like a deer hunter,",
    "ai-thag2.40:3.2_0": "Upavāṇa,",
    "ai-thag2.40:3.3_0": "Kaccāna is cut off,",
    "ai-thag2.40:3.4_0": "a great producer of dung,",
    "ai-thag2.40:3.5_0": "With Pāṭaputta,",
    "ai-thag2.40:3.6_0": "a line drawn, a thorn."
}