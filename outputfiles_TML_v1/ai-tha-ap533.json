{
    "ai-tha-ap533:0.1_0": "Therāpadāna",
    "ai-tha-ap533:0.2_0": "Kaccāyanavagga",
    "ai-tha-ap533:0.3_0": "1 Mahākaccāyanattheraapadāna",
    "ai-tha-ap533:1.1_0": "“Because they spring up,",
    "ai-tha-ap533:1.2_0": "undeceptive, small,",
