{
    "ai-thag1.41:0.1_0": "Verses of the Senior Monks",
    "ai-thag1.41:0.2_0": "The Book of the Ones",
    "ai-thag1.41:0.3_0": "Chapter Five",
    "ai-thag1.41:0.4_0": "1.41. Sirivaḍḍha",
    "ai-thag1.41:1.1_0": "Lightning flashes down",
    "ai-thag1.41:1.2_0": "With Bhāradvāja, and Paṇḍuka,",
    "ai-thag1.41:1.3_0": "But in the mountain cleft he is absorbed in jhāna—",
    "ai-thag1.41:1.4_0": "the son of the Buddha, inimitable and poised.",
    "ai-thag1.41:1.5_0": "health ..."
}