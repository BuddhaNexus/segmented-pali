{
  "pv40:0.1": "Petavatthu ",
  "pv40:0.2": "Mahāvagga ",
  "pv40:0.3": "5. Ucchupetavatthu ",
  "pv40:1.1": "“Idaṁ mama ucchuvanaṁ mahantaṁ, ",
  "pv40:1.2": "Nibbattati puññaphalaṁ anappakaṁ; ",
  "pv40:1.3": "Taṁ dāni me na paribhogameti, ",
  "pv40:1.4": "Ācikkha bhante kissa ayaṁ vipāko. ",
  "pv40:2.1": "Haññāmi khajjāmi ca vāyamāmi, ",
  "pv40:2.2": "Parisakkāmi paribhuñjituṁ kiñci; ",
  "pv40:2.3": "Svāhaṁ chinnathāmo kapaṇo lālapāmi, ",
  "pv40:2.4": "Kissa kammassa ayaṁ vipāko. ",
  "pv40:3.1": "Vighāto cāhaṁ paripatāmi chamāyaṁ, ",
  "pv40:3.2": "Parivattāmi vāricarova ghamme; ",
  "pv40:3.3": "Rudato ca me assukā niggalanti, ",
  "pv40:3.4": "Ācikkha bhante kissa ayaṁ vipāko. ",
  "pv40:4.1": "Chāto kilanto ca pipāsito ca, ",
  "pv40:4.2": "Santassito sātasukhaṁ na vinde; ",
  "pv40:4.3": "Pucchāmi taṁ etamatthaṁ bhadante, ",
  "pv40:4.4": "Kathaṁ nu ucchuparibhogaṁ labheyyan”ti. ",
  "pv40:5.1": "“Pure tuvaṁ kammamakāsi attanā, ",
  "pv40:5.2": "Manussabhūto purimāya jātiyā; ",
  "pv40:5.3": "Ahañca taṁ etamatthaṁ vadāmi, ",
  "pv40:5.4": "Sutvāna tvaṁ etamatthaṁ vijāna. ",
  "pv40:6.1": "Ucchuṁ tuvaṁ khādamāno payāto, ",
  "pv40:6.2": "Puriso ca te piṭṭhito anvagacchi; ",
  "pv40:6.3": "So ca taṁ paccāsanto kathesi, ",
  "pv40:6.4": "Tassa tuvaṁ na kiñci ālapittha. ",
  "pv40:7.1": "So ca taṁ abhaṇantaṁ ayāci, ",
  "pv40:7.2": "‘Dehayya ucchun’ti ca taṁ avoca; ",
  "pv40:7.3": "Tassa tuvaṁ piṭṭhito ucchuṁ adāsi, ",
  "pv40:7.4": "Tassetaṁ kammassa ayaṁ vipāko. ",
  "pv40:8.1": "Iṅgha tvaṁ gantvāna piṭṭhito gaṇheyyāsi, ",
  "pv40:8.2": "Gahetvāna taṁ khādassu yāvadatthaṁ; ",
  "pv40:8.3": "Teneva tvaṁ attamano bhavissasi, ",
  "pv40:8.4": "Haṭṭho cudaggo ca pamodito cā”ti. ",
  "pv40:9.1": "Gantvāna so piṭṭhito aggahesi, ",
  "pv40:9.2": "Gahetvāna taṁ khādi yāvadatthaṁ; ",
  "pv40:9.3": "Teneva so attamano ahosi, ",
  "pv40:9.4": "Haṭṭho cudaggo ca pamodito cāti. ",
  "pv40:10.1": "Ucchupetavatthu pañcamaṁ. "
}