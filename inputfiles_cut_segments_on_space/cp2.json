{
  "cp2:0.1": "Cariyāpiṭaka ",
  "cp2:0.2": "Akittivagga ",
  "cp2:0.3": "Dānapāramī 2 ",
  "cp2:0.4": "Saṅkhacariya ",
  "cp2:1.1": "“Punāparaṁ yadā homi, ",
  "cp2:1.2": "Brāhmaṇo saṅkhasavhayo; ",
  "cp2:1.3": "Mahāsamuddaṁ taritukāmo, ",
  "cp2:1.4": "Upagacchāmi paṭṭanaṁ. ",
  "cp2:2.1": "Tatthaddasaṁ paṭipathe, ",
  "cp2:2.2": "Sayambhuṁ aparājitaṁ; ",
  "cp2:2.3": "Kantāraddhānaṁ paṭipannaṁ, ",
  "cp2:2.4": "Tattāya kaṭhinabhūmiyā. ",
  "cp2:3.1": "Tamahaṁ paṭipathe disvā, ",
  "cp2:3.2": "imamatthaṁ vicintayiṁ; ",
  "cp2:3.3": "‘Idaṁ khettaṁ anuppattaṁ, ",
  "cp2:3.4": "puññakāmassa jantuno. ",
  "cp2:4.1": "Yathā kassako puriso, ",
  "cp2:4.2": "khettaṁ disvā mahāgamaṁ; ",
  "cp2:4.3": "Tattha bījaṁ na ropeti, ",
  "cp2:4.4": "na so dhaññena atthiko. ",
  "cp2:5.1": "Evamevāhaṁ puññakāmo, ",
  "cp2:5.2": "Disvā khettavaruttamaṁ; ",
  "cp2:5.3": "Yadi tattha kāraṁ na karomi, ",
  "cp2:5.4": "Nāhaṁ puññena atthiko. ",
  "cp2:6.1": "Yathā amacco muddikāmo, ",
  "cp2:6.2": "rañño antepure jane; ",
  "cp2:6.3": "Na deti tesaṁ dhanadhaññaṁ, ",
  "cp2:6.4": "muddito parihāyati. ",
  "cp2:7.1": "Evamevāhaṁ puññakāmo, ",
  "cp2:7.2": "Vipulaṁ disvāna dakkhiṇaṁ; ",
  "cp2:7.3": "Yadi tassa dānaṁ na dadāmi, ",
  "cp2:7.4": "Parihāyissāmi puññato’. ",
  "cp2:8.1": "Evāhaṁ cintayitvāna, ",
  "cp2:8.2": "orohitvā upāhanā; ",
  "cp2:8.3": "Tassa pādāni vanditvā, ",
  "cp2:8.4": "adāsiṁ chattupāhanaṁ. ",
  "cp2:9.1": "Tenevāhaṁ sataguṇato, ",
  "cp2:9.2": "Sukhumālo sukhedhito; ",
  "cp2:9.3": "Api ca dānaṁ paripūrento, ",
  "cp2:9.4": "Evaṁ tassa adāsahan”ti. ",
  "cp2:10.1": "Saṅkhacariyaṁ dutiyaṁ. "
}