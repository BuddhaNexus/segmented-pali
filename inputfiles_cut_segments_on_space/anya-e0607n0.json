{
  "anya-e0607n0:0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0607n0:1": "Pajjamadhu",
  "anya-e0607n0:2": "Ānanda rañña ratanādi mahā yatinda,",
  "anya-e0607n0:3": "Niccappabuddha padumappiya sevinaṅgī;",
  "anya-e0607n0:4": "Buddhappiyena ghana buddha guṇappiyena,",
  "anya-e0607n0:5": "Therālinā racita pajjamadhuṃ pibantu.",
  "anya-e0607n0:6": "1.",
  "anya-e0607n0:7": "Uṇṇāpapuṇṇasasimaṇdalato galitvā,",
  "anya-e0607n0:8": "Pādambujaṅguli dalaṭṭha sudhā lavānaṃ;",
  "anya-e0607n0:9": "Pantīva satthu nakhapanti pajāvisesaṃ,",
  "anya-e0607n0:10": "Pīṇetu suddha sukhitammaṇa tunḍapītā.",
  "anya-e0607n0:11": "2.",
  "anya-e0607n0:12": "Khittāya māraripunā parivatya satthu,",
  "anya-e0607n0:13": "Pādassayā jita disāya sitattalāya;",
  "anya-e0607n0:14": "Yā jeti kañcana sarāvaliyā siriṃ sā,",
  "anya-e0607n0:15": "Detanginaṃ raṇajayaṅgulipantikantā.",
  "anya-e0607n0:16": "3.",
  "anya-e0607n0:17": "Sovaṇṇa vaṇṇa sukhumacchavi somma kumma,",
  "anya-e0607n0:18": "Piṭṭhīva piṭṭhi kamatunnati bhāti yesaṃ;",
  "anya-e0607n0:19": "Tesuppatiṭṭhitasukomaladīghapaṇhi,",
  "anya-e0607n0:20": "Pādā jinassa padadantu padaṃ janassa.",
  "anya-e0607n0:21": "4.",
  "anya-e0607n0:22": "Acchera paṅkajasiraṃ siriyā sakāya,",
  "anya-e0607n0:23": "Ye maddino viya caranti saroja sīse;",
  "anya-e0607n0:24": "Sañcumbitā viya ca tāni parāga rāgā,",
  "anya-e0607n0:25": "Te nīrajā munipadā padadantu lakkhiṃ.",
  "anya-e0607n0:26": "5.",
  "anya-e0607n0:27": "Agāmi kāla jana maṅgala bhattu bhāvaṃ,",
  "anya-e0607n0:28": "Vyākattumatra kusaleniva nimmitāni;",
  "anya-e0607n0:29": "Yātrāsumaṭṭhasatamaṅgalakkhaṇāni,",
  "anya-e0607n0:30": "Sādhetu naṃ padayugaṃ jayamaṅgalāni.",
  "anya-e0607n0:31": "6.",
  "anya-e0607n0:32": "Sassevijantuvarasantipurappavese,",
  "anya-e0607n0:33": "Niccaṃ susajja ṭhapitāniva maṅgalāya;",
  "anya-e0607n0:34": "Ye te dadhanti kalamaṅgalalakkhaṇāni,",
  "anya-e0607n0:35": "Vattantu te jinapadā jayamaṅgalāya.",
  "anya-e0607n0:36": "7.",
  "anya-e0607n0:37": "Sabbebhibhūya sapadesu nipātanassa,",
  "anya-e0607n0:38": "Saññāṇakaṃ viya yadassitasabbaloko;",
  "anya-e0607n0:39": "Pādātyadhokatatilokasirovarā pi,",
  "anya-e0607n0:40": "Lokaṃ puṇantu jayamaṅgalakāraṇāni.",
  "anya-e0607n0:41": "8.",
  "anya-e0607n0:42": "Lokattayekasaraṇattavibhāvanāya,",
  "anya-e0607n0:43": "Sajjo va tiṭṭhati yahiṃ suvibhattaloko;",
  "anya-e0607n0:44": "Taṃ sabbalokapaṭibimbitadappaṇābhaṃ,",
  "anya-e0607n0:45": "Pādadvayaṃ janasusajjanahetu hotu.",
  "anya-e0607n0:46": "9.",
  "anya-e0607n0:47": "Lokuttarāya siriyādhigamāya suṭṭhu,",
  "anya-e0607n0:48": "Rajanti yattha diguṇāniva pātu bhūtā;",
  "anya-e0607n0:49": "Cakkāsanābhisahanemisahassarāni,",
  "anya-e0607n0:50": "Tyaṅghī disantu sakalissariyaṃ janassa.",
  "anya-e0607n0:51": "10.",
  "anya-e0607n0:52": "Yatrullasanti duvidhāniva pātū bhūtā,",
  "anya-e0607n0:53": "Dhammassasabbabhuvanassa ca issaratte;",
  "anya-e0607n0:54": "Cakkāni cakkasadisāni sudassanassa,",
  "anya-e0607n0:55": "Tānajja jantu saraṇā caraṇāni hontu.",
  "anya-e0607n0:56": "11.",
  "anya-e0607n0:57": "Sattesu vacchatu sirī sirivacchakena,",
  "anya-e0607n0:58": "Sovatthi sotthimanutiṭṭhatu puggalesu;",
  "anya-e0607n0:59": "Nandiṃ janānamanuvattatu nandivattī,",
  "anya-e0607n0:60": "Sīsānalaṃkurutu pādavataṃsako pi.",
  "anya-e0607n0:61": "12.",
  "anya-e0607n0:62": "Bhaddāya pīṭhamupagacchatu bhaddapīṭhaṃ,",
  "anya-e0607n0:63": "Vuddhiṃ janānamanuvattatu vaddhamānaṃ;",
  "anya-e0607n0:64": "Puṇṇattamaṅgimanukubbatu puṇṇakumbho,",
  "anya-e0607n0:65": "Pāti ca pātu satataṃ janataṃ apāyā.",
  "anya-e0607n0:66": "13.",
  "anya-e0607n0:67": "Setātapattamapanetamaghātape taṃ,",
  "anya-e0607n0:68": "Khaggo vichindatu sadā duritārivagge;",
  "anya-e0607n0:69": "Saṃklesadāhamapanetu satālavaṇṭa,",
  "anya-e0607n0:70": "Saṃvījanī kumatimakkhikamorahattho.",
  "anya-e0607n0:71": "14.",
  "anya-e0607n0:72": "Ākaḍḍhano janavilocanamattaninnaṃ,",
  "anya-e0607n0:73": "Vāretu sabbagativāranamaṅkuso so;",
  "anya-e0607n0:74": "Pādambujassirivilāsaniketanaṃ va,",
  "anya-e0607n0:75": "Pāsādalakhaṇamupetu manopasādaṃ.",
  "anya-e0607n0:76": "15.",
  "anya-e0607n0:77": "Pāṇīnamattabhajataṃ varapuṇṇapattaṃ,",
  "anya-e0607n0:78": "Sammā dadātu padanissitapuṇṇapatto;",
  "anya-e0607n0:79": "Pādesu jantu manabandhanadāmabhūtaṃ,",
  "anya-e0607n0:80": "Dāmaṃ dametu vimalaṃ janatammanāni.",
  "anya-e0607n0:81": "16.",
  "anya-e0607n0:82": "Uṇhīsakuppalamaṇīpadumehi pādā,",
  "anya-e0607n0:83": "Sassevijantukaraṇāni vibhūsayantu;",
  "anya-e0607n0:84": "Sannettanāvupagatānamanagghakāni,",
  "anya-e0607n0:85": "Bojjhaṅgasattaratanāni dade samuddo.",
  "anya-e0607n0:86": "17.",
  "anya-e0607n0:87": "Uttuṅga niccalaguṅā jitatāya niccaṃ,",
  "anya-e0607n0:88": "Sevīva pādasiri nicca samubbahaṃ va;",
  "anya-e0607n0:89": "Atrāpi sakkabhavanubbahaṇe niyutto,",
  "anya-e0607n0:90": "Pādaṭṭhameru bhavataṃ bhavataṃ vibhūtyā.",
  "anya-e0607n0:91": "18.",
  "anya-e0607n0:92": "So cakkavāḷasikharī pyavataṃ samantā,",
  "anya-e0607n0:93": "Sabbūpasaggavisarājanataṃ samaggaṃ;",
  "anya-e0607n0:94": "Dīpā puthūpi caturo dvisahassa khuddā,",
  "anya-e0607n0:95": "Dhārentvapāyapatamānamadatva jantuṃ.",
  "anya-e0607n0:96": "19.",
  "anya-e0607n0:97": "Sūro pabodhayatu jantu saroruhāni,",
  "anya-e0607n0:98": "Cando pasāda kumudāni manodahesu;",
  "anya-e0607n0:99": "Nakkhattajātamakhilaṃ subhatāya hotu,",
  "anya-e0607n0:100": "Cakkaṃ dhajaṃ ripujayāya jayaddhajāya.",
  "anya-e0607n0:101": "20.",
  "anya-e0607n0:102": "Jetuṃ sasaṃsada-sudassana-cakkavatti,",
  "anya-e0607n0:103": "Cakkānugantalalitaṃ yahimāvaheyya;",
  "anya-e0607n0:104": "Cakkāṇuvatti parisāvata-cakkavatti,",
  "anya-e0607n0:105": "Naṃvattataṃ padayugaṃ janatā hitāya.",
  "anya-e0607n0:106": "21.",
  "anya-e0607n0:107": "Pujetumāgata vatā vajirāsanaṭṭha,",
  "anya-e0607n0:108": "Mindena chaḍḍita mahāvijayuttarākhyaṃ;",
  "anya-e0607n0:109": "Saṃkhaṃ paviṭṭhamiva mārabhayā padādho,",
  "anya-e0607n0:110": "Pādaṭṭhasaṃkhamiha vattatu santiyā vo.",
  "anya-e0607n0:111": "22.",
  "anya-e0607n0:112": "Sovaṇṇamacchayugalaṃ sivabhatta bhoge,",
  "anya-e0607n0:113": "Icchā bahūpakaraṇaṃ bhavataṃ janānaṃ;",
  "anya-e0607n0:114": "Kumbhīladhiggahitato va padutthacittā,",
  "anya-e0607n0:115": "Pādambujākara vigāhi tu nopahontu.",
  "anya-e0607n0:116": "23.",
  "anya-e0607n0:117": "Sattāpagā janamanoja male jahantu,",
  "anya-e0607n0:118": "Saṃklesadāhamapanentu dahā ca satta;",
  "anya-e0607n0:119": "Selā ca satta vidadhantu janassa tānaṃ,",
  "anya-e0607n0:120": "Lokappasiddhijanane bhavataṃ patākā.",
  "anya-e0607n0:121": "24.",
  "anya-e0607n0:122": "Pāṭaṅki santi gamane bhavatūpakārā,",
  "anya-e0607n0:123": "Dāhettanesu jahataṃ padacāmaraṃ taṃ;",
  "anya-e0607n0:124": "Sallokalocanamahussava-ussitaṃ va,",
  "anya-e0607n0:125": "Vatteyya toraṇamanuttaramaṅgalāya.",
  "anya-e0607n0:126": "25.",
  "anya-e0607n0:127": "Yasmiṃ miginda gata bhīti balāva daḍḍha,",
  "anya-e0607n0:128": "Dānā natā siravidāraṇa pīḷitāva;",
  "anya-e0607n0:129": "Nālāgirī karivaro girimekhalo ca,",
  "anya-e0607n0:130": "Taṃ sīhavikkamapadaṃ hanatā ghadantiṃ.",
  "anya-e0607n0:131": "26.",
  "anya-e0607n0:132": "Pāpāhino hanatu pādasuvaṇṇarājā,",
  "anya-e0607n0:133": "Vyagghādhipo kalijane adataṃ asesaṃ;",
  "anya-e0607n0:134": "Vālāha-assapati sampatituṃ adatvā,",
  "anya-e0607n0:135": "Pāyesu pāpayatu santipurampajāyo.",
  "anya-e0607n0:136": "27.",
  "anya-e0607n0:137": "Chaddanta danti lalitaṃ galitaṃ rusamhā,",
  "anya-e0607n0:138": "Luddetta dubbhini dise acalaṃ dadhāno;",
  "anya-e0607n0:139": "Pādaṭṭhahatthipati sampati jantutāse,",
  "anya-e0607n0:140": "Tāsetu hāsamaparandisataṃ satānaṃ.",
  "anya-e0607n0:141": "28.",
  "anya-e0607n0:142": "Sabbaṅgino caraṇuposatha hatthirājā,",
  "anya-e0607n0:143": "Pāpetu sabbacatudīpikarajjalakkhiṃ;",
  "anya-e0607n0:144": "Kittīva pādaparicārikatā niyuttā,",
  "anya-e0607n0:145": "Kelasaselapaṭimā hitamācareyya.",
  "anya-e0607n0:146": "29.",
  "anya-e0607n0:147": "Sāmissa haṃsasamaye dahapāsabaddha,",
  "anya-e0607n0:148": "Māsīna vesagamako viya pādahaṃso;",
  "anya-e0607n0:149": "Nigghosa gantijitato viya mūgapakkho,",
  "anya-e0607n0:150": "Yāretu sabba janatā bhavagantukattaṃ.",
  "anya-e0607n0:151": "30.",
  "anya-e0607n0:152": "Ohāya dibbasarasiṃ khilaloka sabba,",
  "anya-e0607n0:153": "Rammaṅghivāpimavagāhitavāva pāde;",
  "anya-e0607n0:154": "Erāvaṇo karivaro manasābhiruḷhe,",
  "anya-e0607n0:155": "Jantuṃ purindadapuraṃ nayataṃ va sīghaṃ.",
  "anya-e0607n0:156": "31.",
  "anya-e0607n0:157": "Hitvā sakambhavanamaṅghinisevanattha,",
  "anya-e0607n0:158": "Māgamma ramma taratāyiha nissito va;",
  "anya-e0607n0:159": "Pāletva mūni padavāpitaraṅgabhaṅgi,",
  "anya-e0607n0:160": "Mangī karontatanuvāsuki nāgarājā.",
  "anya-e0607n0:161": "32.",
  "anya-e0607n0:162": "Nāthassa kañcanasikhāvalajātilīla,",
  "anya-e0607n0:163": "Māvikaraṃ va padanissitamorarājā;",
  "anya-e0607n0:164": "Taṃ dhammadesanaraveniva luddakassa,",
  "anya-e0607n0:165": "Lokassa pāpaphaṇino hanataṃ asesaṃ.",
  "anya-e0607n0:166": "33.",
  "anya-e0607n0:167": "Saṃsārasāgaragate sadhane jane te,",
  "anya-e0607n0:168": "Netampade kalacatummukhahemanāvā;",
  "anya-e0607n0:169": "Nibbāṇapaṭṭanavaraṃ bharukacchakantaṃ,",
  "anya-e0607n0:170": "Suppārapaṇḍita gatā viya āsunāvā.",
  "anya-e0607n0:171": "34.",
  "anya-e0607n0:172": "Sambodhi ñāṇa paripācayato munissa,",
  "anya-e0607n0:173": "Bhatto yathā himavataddi samādhihetu;",
  "anya-e0607n0:174": "Evammanena bhajataṃ himavaddipāde,",
  "anya-e0607n0:175": "Sambodhiñāṇa paripācanahetu hotu.",
  "anya-e0607n0:176": "35.",
  "anya-e0607n0:177": "Daḷhaṃ parājitatayā muninā sarena,",
  "anya-e0607n0:178": "Suññassaropagata pañjara bandhanova;",
  "anya-e0607n0:179": "So pādapañjaragato karavīkapakkhī,",
  "anya-e0607n0:180": "Sabbesamappīyāvacañjahatā bhavantaṃ.",
  "anya-e0607n0:181": "36.",
  "anya-e0607n0:182": "Te cakkavāka makarā api koñca jīvaṃ,",
  "anya-e0607n0:183": "Jīvādi pakkhivisarā sarasīva bhuttaṃ;",
  "anya-e0607n0:184": "Vessantarena caraṇambuji nibbhajantā,",
  "anya-e0607n0:185": "Jantu tahiṃ viya pade suramentu niccaṃ.",
  "anya-e0607n0:186": "37.",
  "anya-e0607n0:187": "Taṃ candakinnaragatiṃva gatassa bodhi,",
  "anya-e0607n0:188": "Sattassa tassa sapajāpatikassa bhāvaṃ;",
  "anya-e0607n0:189": "Saṃsūcayanta pada kinnara kinnarī ve,",
  "anya-e0607n0:190": "Sāmaggimagga paṭi pattisu pāpayantu.",
  "anya-e0607n0:191": "38.",
  "anya-e0607n0:192": "Saṃrājadhānimusabho vahatagga bhāraṃ,",
  "anya-e0607n0:193": "Pītippayo pajanayeyya savacchadhenu;",
  "anya-e0607n0:194": "Sassevino abhiramentu chakāmasaggā,",
  "anya-e0607n0:195": "Dhārentu jhāyimiha soḷasa dhātudhāmā.",
  "anya-e0607n0:196": "39.",
  "anya-e0607n0:197": "Sutvā jinassa karavīka sarammanuññaṃ,",
  "anya-e0607n0:198": "Aññoñña bhītirahitā api paccanīkā;",
  "anya-e0607n0:199": "Hitvā gatiṃ viya ṭhitā padasattarūpā,",
  "anya-e0607n0:200": "Sabbaṃ bhavassita janānagatiṃ hanantu.",
  "anya-e0607n0:201": "40.",
  "anya-e0607n0:202": "Sovaṇṇa kāhaḷa yugo pamamindirāya,",
  "anya-e0607n0:203": "Sannīrapuppha mukulopamamussavāya;",
  "anya-e0607n0:204": "Niccaṃ susajja ṭhapitaṃ muni tiṭṭhatante,",
  "anya-e0607n0:205": "Jaṅghādvayaṃ janavilocana maṅgalāya.",
  "anya-e0607n0:206": "41.",
  "anya-e0607n0:207": "Lakhyā vilāsa mukuradvaya sannikāsaṃ,",
  "anya-e0607n0:208": "Tāḍaṅka maṇḍana viḍambakamaṃsu saṇḍaṃ;",
  "anya-e0607n0:209": "Jānudvayaṃ laḷita sāgara bubbalābhaṃ,",
  "anya-e0607n0:210": "Hotaṃ jagattaya nijatta vibhūsitunte.",
  "anya-e0607n0:211": "42.",
  "anya-e0607n0:212": "Chaddanti dinna varadanta yugopamānā,",
  "anya-e0607n0:213": "Taṃ hatthi soṇḍa kama puṇṇa guṇā tavorū;",
  "anya-e0607n0:214": "Līla payodhi siri keḷi suvaṇṇarambhā,",
  "anya-e0607n0:215": "Khandhāva dentu paripuṇṇa gune janānāṃ.",
  "anya-e0607n0:216": "43.",
  "anya-e0607n0:217": "Jaṅghakkha kadvya samappita cittapāda,",
  "anya-e0607n0:218": "Cakkadvayī manamanojahayo mune te;",
  "anya-e0607n0:219": "Sonī ratho sirivaho manasā bhiruḷhaṃ,",
  "anya-e0607n0:220": "Lokattayaṃ sivapuraṃ lahu pāpayātu.",
  "anya-e0607n0:221": "44.",
  "anya-e0607n0:222": "Rammora pākaṭa taṭāka taṭā savanta,",
  "anya-e0607n0:223": "Romāvalī jala panālika koṭikaṭṭhā;",
  "anya-e0607n0:224": "Nābhī gabhīra sarasī siri keḷitā te,",
  "anya-e0607n0:225": "Sassevinaṃ vyasana ghammamalaṃ sametu.",
  "anya-e0607n0:226": "45.",
  "anya-e0607n0:227": "Kanticchaṭā luḷita rūpa payodhi nābhi,",
  "anya-e0607n0:228": "Āvaṭṭa vaṭṭita nimujjita sabbaloko;",
  "anya-e0607n0:229": "Sobhagga toya nivahaṃ visaso pivitvā,",
  "anya-e0607n0:230": "Lokuttarādi sukha mucchitataṃ payātu.",
  "anya-e0607n0:231": "46.",
  "anya-e0607n0:232": "Gambhīra cittarahadaṃ paripūrayitvā,",
  "anya-e0607n0:233": "Taṃ sandamāna karuṇambu pavāha tulyā;",
  "anya-e0607n0:234": "Romālivallihari nābhi subhālavālā,",
  "anya-e0607n0:235": "Detaṃ lahuṃ sivaphalaṃ bhajataṃ mune te.",
  "anya-e0607n0:236": "47.",
  "anya-e0607n0:237": "Cārūra sāriphalako kuṭilagga loma,",
  "anya-e0607n0:238": "Pantī vibhatti sahito siri keḷi sajjo;",
  "anya-e0607n0:239": "Saggāpavagga sukha jūtaka keḷi hetu,",
  "anya-e0607n0:240": "Hotaṃ tiloka sukha jūtaka soṇḍakānaṃ.",
  "anya-e0607n0:241": "48.",
  "anya-e0607n0:242": "Gambhīra citta rahado dara gāhamāna,",
  "anya-e0607n0:243": "Mettādayā kari vadhū kara sanni kāsā;",
  "anya-e0607n0:244": "Sabbaṅginaṃ sivaphalaṃ tanu deva rukkhe,",
  "anya-e0607n0:245": "Sākhā sakhā tava bhujā bhajataṃ dadantu.",
  "anya-e0607n0:246": "49.",
  "anya-e0607n0:247": "Nihāra bindu sahitaggadalopa sobhi,",
  "anya-e0607n0:248": "Byālamba ratta padumadvaya bhaṅgi bhājā;",
  "anya-e0607n0:249": "Pāpārisīsalunateniva ratta rattā,",
  "anya-e0607n0:250": "Rattā karā tava bhavumbhuvi maṅgalāya.",
  "anya-e0607n0:251": "50.",
  "anya-e0607n0:252": "Rupassirī carita caṅkama vibbhamā te,",
  "anya-e0607n0:253": "Piṭṭhī yathā kalala muddhani setu bhūtā;",
  "anya-e0607n0:254": "Evaṃ bhavaṇṇava samuttaraṇāya setu,",
  "anya-e0607n0:255": "Hotammahākanaka saṃkama sannikāsā.",
  "anya-e0607n0:256": "51.",
  "anya-e0607n0:257": "Saddhamma desana manohara bherināda,",
  "anya-e0607n0:258": "Saṃcāraṇe sivapuraṃ visituṃ janānaṃ;",
  "anya-e0607n0:259": "Gīvā suvaṇṇamaya cāru mutiṅga bheri,",
  "anya-e0607n0:260": "Bhāvambhajā bhavatu bhūta vibhūtiyā te.",
  "anya-e0607n0:261": "52.",
  "anya-e0607n0:262": "Lakhī nivāsa vadanambuja matta ninna,",
  "anya-e0607n0:263": "Mākaḍḍhayaṃ jana vilocana cañcarīke;",
  "anya-e0607n0:264": "Sorabbha dhamma makaranda nisandamānaṃ,",
  "anya-e0607n0:265": "Piṇetu tena sarasena sabhā jane te.",
  "anya-e0607n0:266": "53.",
  "anya-e0607n0:267": "Lakhī samāruhita vattarathe rathaṅga,",
  "anya-e0607n0:268": "Dvandānu kāri miga rāja kapola līlaṃ;",
  "anya-e0607n0:269": "Tādaṅka maṇḍalayugaṃ viya kaṇṇabhājaṃ,",
  "anya-e0607n0:270": "Gaṇḍatthaladvyamalaṃkurutaṃ janatte.",
  "anya-e0607n0:271": "54.",
  "anya-e0607n0:272": "Lāvaṇṇa maṇṇava pavāḷa latā dvayābhaṃ,",
  "anya-e0607n0:273": "Tandeha deva taru pallava kante mantaṃ;",
  "anya-e0607n0:274": "Vattāravinda makaranda parājisobhaṃ,",
  "anya-e0607n0:275": "Rattādharadvayamadho kurutaṃ janāghaṃ.",
  "anya-e0607n0:276": "55.",
  "anya-e0607n0:277": "Uṇṇā sakuntigata matthaka natthu kūpa,",
  "anya-e0607n0:278": "Subbhū lakāra sahitoṭṭha pavāḷa nāvā;",
  "anya-e0607n0:279": "Gattuttararaṇṇava gatā tava jantukānaṃ,",
  "anya-e0607n0:280": "Hotaṃ bhavaṇṇava samuttaranaya nātha.",
  "anya-e0607n0:281": "56.",
  "anya-e0607n0:282": "Isaṃ vikāsa padumodara kesarāli,",
  "anya-e0607n0:283": "Līlā vinaddha rucirā tava danta panti;",
  "anya-e0607n0:284": "Vānī vadhū dharita mālati mālya tulyā,",
  "anya-e0607n0:285": "Tassaṃ jānassa manarañjana mācareyya.",
  "anya-e0607n0:286": "57.",
  "anya-e0607n0:287": "Saddhamma nijjhara suratta silātalābhā,",
  "anya-e0607n0:288": "Jivhā vacī naṭa vadhū kala raṅga bhūtā;",
  "anya-e0607n0:289": "Saddhamma seṭṭha taraṇī nihitappiyā te,",
  "anya-e0607n0:290": "Saṃsāra sāgara samuttaraṇāya hotu.",
  "anya-e0607n0:291": "58.",
  "anya-e0607n0:292": "Dantaṃsu kañcukīta rattadharo padhāne,",
  "anya-e0607n0:293": "Jivhā suratta sayane mukha mandiraṭṭhe;",
  "anya-e0607n0:294": "Āmokkha mutti vadhuyā sayitāya tuyhaṃ,",
  "anya-e0607n0:295": "Kubbantu saṃgama malaṃ jana sotu kāmi.",
  "anya-e0607n0:296": "59.",
  "anya-e0607n0:297": "Uṇṇā tathābhinava patta varābhi rāmā,",
  "anya-e0607n0:298": "Līlollasanta bhamukadvaya nīla pattā;",
  "anya-e0607n0:299": "Ghānoru cāru kadalī vadanā lavālā,",
  "anya-e0607n0:300": "Tuyhaṃ pavattatu ciraṃ jana maṅgalāya.",
  "anya-e0607n0:301": "60.",
  "anya-e0607n0:302": "Bālatthalī hari silātala piṭṭhikaṭṭha,",
  "anya-e0607n0:303": "Bhūvallaridvaya mayūra yugassa tuyhaṃ;",
  "anya-e0607n0:304": "Pañcappabhā rucira piccha yugassirīkaṃ,",
  "anya-e0607n0:305": "Nettadvayaṃ manasi puñchatu pāpadhūliṃ.",
  "anya-e0607n0:306": "61.",
  "anya-e0607n0:307": "Indīvarāntagata bhiṅgika panti bhaṅgi,",
  "anya-e0607n0:308": "Pañambujassaratate viya gacchapantī;",
  "anya-e0607n0:309": "Nettambujassiri tirokaraṇīva tuyhaṃ,",
  "anya-e0607n0:310": "Pamhāvalī sirigateha tiro karontu.",
  "anya-e0607n0:311": "62.",
  "anya-e0607n0:312": "Vattullasambuja vilocana haṃsa tuṇḍa,",
  "anya-e0607n0:313": "Kañjaṃsu piñjara mulāla latā dvyābhaṃ;",
  "anya-e0607n0:314": "Dolādvayaṃva savaṇadvyamatta lakkhyā,",
  "anya-e0607n0:315": "Hotaṃ tavajja janatā maticārahetu.",
  "anya-e0607n0:316": "63.",
  "anya-e0607n0:317": "Vammīka matthaka sayānaka bhūridatta,",
  "anya-e0607n0:318": "Bhoginda bhogavali vibbhamamā vahanti;",
  "anya-e0607n0:319": "Ghānopariṭṭhitamune tava tuṇṇamuṇṇā,",
  "anya-e0607n0:320": "Taggāhino viya janassa dadātu vittaṃ.",
  "anya-e0607n0:321": "64.",
  "anya-e0607n0:322": "Rūpindirāya vijaye khila loka rūpaṃ,",
  "anya-e0607n0:323": "Ghāṇoru cāru parighopari baddha siddhā;",
  "anya-e0607n0:324": "Nīlābha vāta viluthanta vayaddhajābhā,",
  "anya-e0607n0:325": "Tiṭṭhantu sajja duritāri jayāya te bhū.",
  "anya-e0607n0:326": "65.",
  "anya-e0607n0:327": "Uṇṇassitopala nivesita bunda sandhi,",
  "anya-e0607n0:328": "Ghāṇoru piṇḍakamaghā tapa rundhitunte;",
  "anya-e0607n0:329": "Hotammukhambuja sirī sirasussitābhaṃ,",
  "anya-e0607n0:330": "Bhū nīla paṭṭika lalāta suvaṇṇa chattaṃ.",
  "anya-e0607n0:331": "66.",
  "anya-e0607n0:332": "Rupaṅka vedana vilocana bāna diṭṭhī,",
  "anya-e0607n0:333": "Dhārā nisāna maṇivaṭṭa sirī siro te;",
  "anya-e0607n0:334": "Siddhā matosadha katañjana puñja lakkhī,",
  "anya-e0607n0:335": "Hotaṃ janassa nayanāmaya nāsanāya.",
  "anya-e0607n0:336": "67.",
  "anya-e0607n0:337": "Sakkhandha bāhuyuga torana majjha gīvā,",
  "anya-e0607n0:338": "Dharappitassirighato pari mussavāya;",
  "anya-e0607n0:339": "Nīluppalāva ṭhapitā savibhatti kante,",
  "anya-e0607n0:340": "Kesā bhavantu bhuvanattaya maṅgalāya.",
  "anya-e0607n0:341": "68.",
  "anya-e0607n0:342": "Hemagghiye ṭhapita nīla silā kapāle,",
  "anya-e0607n0:343": "Pajjota jāla lalitaṃ muni sārayantī;",
  "anya-e0607n0:344": "Rūpassirī sirasi bhūsita hema mālā,",
  "anya-e0607n0:345": "Kārā karotu subhagaṃ tava ketu mālā.",
  "anya-e0607n0:346": "69.",
  "anya-e0607n0:347": "Bhyāmappabhāli tava kañcana mora kāle,",
  "anya-e0607n0:348": "Surodaye vitata candaka cakkalakkhī;",
  "anya-e0607n0:349": "Meghāvanaddha sikharunnata hema selā,",
  "anya-e0607n0:350": "Yantindacāpa vikatīva dadātu sobhaṃ.",
  "anya-e0607n0:351": "70.",
  "anya-e0607n0:352": "Paṭṭhāya te paṇidhito suci dāna sīla,",
  "anya-e0607n0:353": "Nekkhamma pañña viriyakkhama saccadhiṭṭhā;",
  "anya-e0607n0:354": "Mettā upekkhiti ime dasa pūratova,",
  "anya-e0607n0:355": "Pūrentu pārami guṇā janatānamatte.",
  "anya-e0607n0:356": "71.",
  "anya-e0607n0:357": "Pattuttaruttaradasā paṇidhāna bījā,",
  "anya-e0607n0:358": "Cetoradharāya karuṇā jala sekha vuddhā;",
  "anya-e0607n0:359": "Sabbaññu ñāṇa phaladā sati vāṭa guttā,",
  "anya-e0607n0:360": "Taṃ samphalandisatu pāramitā latā te.",
  "anya-e0607n0:361": "72.",
  "anya-e0607n0:362": "Ābodhi puṇṇami padiṭṭha dinādito te,",
  "anya-e0607n0:363": "Sambhāra kāla sita pakkha kamābhi vuddho;",
  "anya-e0607n0:364": "Sampuṇṇa pārami guṇāmataraṃsi taṃva,",
  "anya-e0607n0:365": "Sabbaṅgi kunda kumudāni pabodhayeyya.",
  "anya-e0607n0:366": "73.",
  "anya-e0607n0:367": "Āpacchimabbhava sivapphala lābha dānā,",
  "anya-e0607n0:368": "Dānappabandhamapidāna phalappabhandaṃ;",
  "anya-e0607n0:369": "Saṃvaḍḍhayi tvaṃ abhipatthanato yathevaṃ,",
  "anya-e0607n0:370": "Jantuttaruttara phalaṃ khalu sambhunantu.",
  "anya-e0607n0:371": "74.",
  "anya-e0607n0:372": "Ārambhatoppabhuti yāva tavaggamaggā,",
  "anya-e0607n0:373": "Vikkhālita ghakalusaṃ suci sīla toyaṃ;",
  "anya-e0607n0:374": "Mettā dayā madhura sītalatāyupetaṃ,",
  "anya-e0607n0:375": "Sodhetu tvaṃva bhava nissita jantu metaṃ.",
  "anya-e0607n0:376": "75.",
  "anya-e0607n0:377": "Āpaccimattamabhinikkhamanābhiyogā,",
  "anya-e0607n0:378": "Paṭṭhāya tampabhavato paripuṇṇa gehā;",
  "anya-e0607n0:379": "Tvaṃ sabba jāti gahato api nikkhamittho,",
  "anya-e0607n0:380": "Evaṃ janā bhava dukhā khalu nikkhamantu.",
  "anya-e0607n0:381": "76.",
  "anya-e0607n0:382": "Ekaggato pala tale nisitā cirandhi,",
  "anya-e0607n0:383": "Dhārā sucittu sutale sati daṇḍa baddhe;",
  "anya-e0607n0:384": "Nibbijjhi lakkhaṇa dhanuṭṭhiti santi lakkhaṃ,",
  "anya-e0607n0:385": "Khittā tayonamanu vijjhatu jantu khittā.",
  "anya-e0607n0:386": "77.",
  "anya-e0607n0:387": "Tvaṃ pāramī jala nidhiṃ caturiha bāhu,",
  "anya-e0607n0:388": "Sattīhi suttari ciraṃ janakova sindhuṃ;",
  "anya-e0607n0:389": "Sampanna vikkama phalosi yathā casova,",
  "anya-e0607n0:390": "Evaṃ janā viriyatapphalame dhayantu.",
  "anya-e0607n0:391": "78.",
  "anya-e0607n0:392": "Satta paradha dahanesu ciraṃ sudhantaṃ,",
  "anya-e0607n0:393": "Khantī suvaṇṇa kata rūpa samantimattā;",
  "anya-e0607n0:394": "Sabbā parādhamasahi tvaṃasayhamevaṃ,",
  "anya-e0607n0:395": "Sabbe janāpi khamanena bhajantu santiṃ.",
  "anya-e0607n0:396": "79.",
  "anya-e0607n0:397": "Lakkhādhikaṃ catura saṃkhiya kappa kālaṃ,",
  "anya-e0607n0:398": "Saccena suṭṭhu paribhāvita vācino te;",
  "anya-e0607n0:399": "Vācāya sacca phusitāya samenti jantu,",
  "anya-e0607n0:400": "Evaṃ visuddha vacanā janatā bhavantu.",
  "anya-e0607n0:401": "80.",
  "anya-e0607n0:402": "Ādinna dhamma mahiyatthira suppatiṭṭhā,",
  "anya-e0607n0:403": "Dhiṭṭhāna pārami mahā vajiraddi tuyhaṃ;",
  "anya-e0607n0:404": "Sattena kena pi yathāhi abhejja nejjo,",
  "anya-e0607n0:405": "Evaṃ janāpi kusalesu adhiṭṭha hantu.",
  "anya-e0607n0:406": "81.",
  "anya-e0607n0:407": "Tvaṃ sabba satta cirabhāvita metta citta,",
  "anya-e0607n0:408": "Toyehi saṃsamita kodha mahā hutāso;",
  "anya-e0607n0:409": "Lokuttaraṃ taditaraṃ hitamāvahittho,",
  "anya-e0607n0:410": "Evaṃ janesu janatā hitamāvahantū.",
  "anya-e0607n0:411": "82.",
  "anya-e0607n0:412": "Mittopakāra paṭipakkha janāpakāre,",
  "anya-e0607n0:413": "Tvaṃ nibbikāra manaso cirabhāvanāya;",
  "anya-e0607n0:414": "Pattosilābha pabhutaṭṭusu nibbikāraṃ,",
  "anya-e0607n0:415": "Evaṃ janānunaya kopa nudā bhavantu.",
  "anya-e0607n0:416": "83.",
  "anya-e0607n0:417": "Sampanna hetu vibhavo tusite vimānaṃ,",
  "anya-e0607n0:418": "Yuttaṃ guṇehi navabhippadavī vimānaṃ;",
  "anya-e0607n0:419": "Tvaṃ vādhiparamidhirohiniyā tiloko,",
  "anya-e0607n0:420": "Ārohatu bhaya sukhaṃ padavī vimānaṃ.",
  "anya-e0607n0:421": "84.",
  "anya-e0607n0:422": "Tvaṃverahaṃsi samabujjhi yathāca sammā,",
  "anya-e0607n0:423": "Sampanna vijja caraṇo sugatosi hontu;",
  "anya-e0607n0:424": "Lokaṃ vido purisadammasusārathī si,",
  "anya-e0607n0:425": "Satthāsi bujjhi bhagavā si tatheva jantu.",
  "anya-e0607n0:426": "85.",
  "anya-e0607n0:427": "Saccitta bhū nidahitaṃ janatāya tuyhaṃ,",
  "anya-e0607n0:428": "Kalyāṇavaṇṇaratanaṇṇavajātibhinnaṃ;",
  "anya-e0607n0:429": "Dukkhaggi cora jalupaddutajāti gehe,",
  "anya-e0607n0:430": "Tassā sukhaṃ bhavatu jīvitumāpadāya.",
  "anya-e0607n0:431": "86.",
  "anya-e0607n0:432": "Vācā vicitta vara tantu gataṅgi kaṇṭhe,",
  "anya-e0607n0:433": "Svā mutta sagguṇa mahā ratanā valī te;",
  "anya-e0607n0:434": "Vevaṇṇi yattani bhavaṃ sakalampahāya,",
  "anya-e0607n0:435": "Hotañjanassa siri saṅgama maṅgalāya.",
  "anya-e0607n0:436": "87.",
  "anya-e0607n0:437": "Taṃ sagguṇatthava dahaṭṭha sutippanāli,",
  "anya-e0607n0:438": "Nissandamāna guṇanīra nipāna tinte;",
  "anya-e0607n0:439": "Khettetta saññini janā kata loma haṃsa,",
  "anya-e0607n0:440": "Bījankurī kusala sassa phalaṃ labhantu.",
  "anya-e0607n0:441": "88.",
  "anya-e0607n0:442": "Āpāyikappabhuti dukkha nidāgha kāla,",
  "anya-e0607n0:443": "Santāpitā nikhila loka mano kadambā;",
  "anya-e0607n0:444": "Taṃ vaṅṇa megha phusanā hasanaṅkurehi,",
  "anya-e0607n0:445": "Iddhā bhavantu mati vallari vellītā te.",
  "anya-e0607n0:446": "89.",
  "anya-e0607n0:447": "Hetuddasā phaladasā samavaṭṭhitaṃ taṃ,",
  "anya-e0607n0:448": "Sabbattha satta hitamāvahaṇena siddhaṃ;",
  "anya-e0607n0:449": "Cintāpathātiganubhāva vibhāvanante,",
  "anya-e0607n0:450": "Bhūtānamatthu caritabbhutamattha sidhyā.",
  "anya-e0607n0:451": "90.",
  "anya-e0607n0:452": "Aṅgārakāsumabhilaṅghiya dāna kāle,",
  "anya-e0607n0:453": "Bhattattano pada paṭicchaka paṅkajā ca;",
  "anya-e0607n0:454": "Yātakkhaṇe tava pade dhaṭamuṭṭhahitvā,",
  "anya-e0607n0:455": "Paṅkeruhāṃ siva madhuṃ sarataṃ dadantu.",
  "anya-e0607n0:456": "91.",
  "anya-e0607n0:457": "Saccena maccha pati vassita vassadhārā,",
  "anya-e0607n0:458": "Satte dayāya tava vassita vassadhārā;",
  "anya-e0607n0:459": "Gimhe janassa samayiṃsu yathā tathātā,",
  "anya-e0607n0:460": "Dhamambuvuṭṭhiva samentu kilesa dāhe.",
  "anya-e0607n0:461": "92.",
  "anya-e0607n0:462": "Chaddanta nāga patinā khamatā parādhaṃ,",
  "anya-e0607n0:463": "Chetvā kare ṭhapita dantavarāva luddaṃ;",
  "anya-e0607n0:464": "Loke hitāya ṭhapitā tava danta dhātu,",
  "anya-e0607n0:465": "Seṭṭhā janaṃ siva puraṃ lahu pāpayantu.",
  "anya-e0607n0:466": "93.",
  "anya-e0607n0:467": "Taṃ temiyākhya yatinossama mālakamhi,",
  "anya-e0607n0:468": "Okiṇṇa mutta kanakā vuja vippakiṇṇā;",
  "anya-e0607n0:469": "Kāruñña vārida cuto daka bindu bandhū,",
  "anya-e0607n0:470": "Dhātu samentu tava jantusu dukkhadāhe.",
  "anya-e0607n0:471": "94.",
  "anya-e0607n0:472": "Raṭṭhassa attha caraṇāya asammukhassa,",
  "anya-e0607n0:473": "Rāmena dinna tiṇa saṃkhata pādukāva;",
  "anya-e0607n0:474": "Bhuttā tayā ciramasammukha nāgatassa,",
  "anya-e0607n0:475": "Lokassa atthamanu tiṭṭhatu patta dhātu.",
  "anya-e0607n0:476": "95.",
  "anya-e0607n0:477": "Vutto janānamupadissa varāha raññā,",
  "anya-e0607n0:478": "Satthiṃ sahassa saradaṃ viya ñāya dhammo;",
  "anya-e0607n0:479": "Ādeyya heyyamupadissa tayā pavutto,",
  "anya-e0607n0:480": "Dhammo pavattatu ciraṃ janatā hitāya.",
  "anya-e0607n0:481": "96.",
  "anya-e0607n0:482": "Mārāri maddana hitādhigamaṃ karotā,",
  "anya-e0607n0:483": "Bhatto tayā vara mahā jaya bodhi rājā;",
  "anya-e0607n0:484": "Saggā pavavagga hitahetu janassa hantvā,",
  "anya-e0607n0:485": "Sabbantarāyamiha tiṭṭhatu suṭṭhu sajjo.",
  "anya-e0607n0:486": "97.",
  "anya-e0607n0:487": "Sāmoda vaṇṇa bhajanī guṇa mañjarīyaṃ,",
  "anya-e0607n0:488": "Cariyā latā vikasitā tava sapphalaṅgaṃ;",
  "anya-e0607n0:489": "Okiṇṇa citta madhupe rasa pīṇayanti,",
  "anya-e0607n0:490": "Sambhāvitā bhuvi pavattatu matthakehi.",
  "anya-e0607n0:491": "98.",
  "anya-e0607n0:492": "Sambuddha selavalayantara jānanavhā,",
  "anya-e0607n0:493": "Nottattato tipathagā yati sāgaraṭṭhā;",
  "anya-e0607n0:494": "Dhammā pagā suti vase tarite puṇanti,",
  "anya-e0607n0:495": "Sambhāra sassamiha vattatu pacayanti.",
  "anya-e0607n0:496": "99.",
  "anya-e0607n0:497": "Paññāṇa kūpa sita paggaha vāyu gāhī,",
  "anya-e0607n0:498": "Saddhā lakāra sahitā sati pota vāhā;",
  "anya-e0607n0:499": "Sampāpayātu bhava sāgara pāra tīra,",
  "anya-e0607n0:500": "Sappattanaṃ varadhane pati patti nāvā.",
  "anya-e0607n0:501": "100.",
  "anya-e0607n0:502": "Bojjhaṅga satta ratanākara dhamma khandha,",
  "anya-e0607n0:503": "Gambhīra nīra caya sāsana sāgaro saṃ;",
  "anya-e0607n0:504": "So sīlyananta tanu veṭitha ñāṇa mantha,",
  "anya-e0607n0:505": "Selena manthitavataṃ disatā mataṃ ve.",
  "anya-e0607n0:506": "101.",
  "anya-e0607n0:507": "Vuttena tena vidhinā vidhinā tato taṃ,",
  "anya-e0607n0:508": "Laddhā nubhūtamamataṃ khila dosa nāsaṃ;",
  "anya-e0607n0:509": "Accanta roga jaratā maraṇā bhi bhūtaṃ,",
  "anya-e0607n0:510": "Bhūtaṃ karotu amaraṃ ajaraṃ arogaṃ.",
  "anya-e0607n0:511": "102.",
  "anya-e0607n0:512": "Saddhamma rāja raviniggata dhammaraṃsi,",
  "anya-e0607n0:513": "Phullo dhutaṅgadala saṃvara kesarāli;",
  "anya-e0607n0:514": "Saṅghāravinda nikaro samadhuṃ samādhi,",
  "anya-e0607n0:515": "Sakkiṇṇiko disatu sāsana vāpi jato.",
  "anya-e0607n0:516": "103.",
  "anya-e0607n0:517": "Ānanda rañña ratanādi mahā yatinda,",
  "anya-e0607n0:518": "Niccappabuddha padumappiya sevinaṅgī;",
  "anya-e0607n0:519": "Buddhappiyena ghana buddha guṇappiyena,",
  "anya-e0607n0:520": "Therālinā racita pajjamadhuṃ pibantu.",
  "anya-e0607n0:521": "104.",
  "anya-e0607n0:522": "Itthaṃ rūpa guṇānukittanavasā taṃ taṃ hitā siṃ sato,",
  "anya-e0607n0:523": "Vatthānussati vattita iha yathā sattesu mettā ca me;",
  "anya-e0607n0:524": "Evaṃ tābhi bhavanta ruttara tarā vattantu tā bodhi me,",
  "anya-e0607n0:525": "Saṃyogoca dhanehi santihi bhave kalyāna mittehi ca."
}