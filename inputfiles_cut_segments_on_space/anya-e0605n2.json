{
  "anya-e0605n2:0": "Vatthuvisodhanīgāthā",
  "anya-e0605n2:1": "4.",
  "anya-e0605n2:2": "Buddhoti ko buddhaguṇo ti ko so,",
  "anya-e0605n2:3": "Acintayādittamupāgato yo;",
  "anya-e0605n2:4": "Anaññasādhāraṇabhūtamatthaṁ,",
  "anya-e0605n2:5": "Akāsi kiṁ so kimavoca buddho.",
  "anya-e0605n2:6": "5.",
  "anya-e0605n2:7": "Visuddhakhandhasantāno buddhoti niyamo kato,",
  "anya-e0605n2:8": "Khandhasantānasuddhī tu guṇoti niyamo kato.",
  "anya-e0605n2:9": "6.",
  "anya-e0605n2:10": "Akāsi kiccāni dinesu pañca,",
  "anya-e0605n2:11": "Pasādayañciddhibalena sena;",
  "anya-e0605n2:12": "Janānasesaṁ cariyānukūlaṁ,",
  "anya-e0605n2:13": "Ñatvānavocānusayappahānaṁ."
}