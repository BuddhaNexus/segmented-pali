{
  "pv41:0.1": "Petavatthu ",
  "pv41:0.2": "Mahāvagga ",
  "pv41:0.3": "6. Kumārapetavatthu ",
  "pv41:1.1": "“Sāvatthi nāma nagaraṁ, ",
  "pv41:1.2": "himavantassa passato; ",
  "pv41:1.3": "Tattha āsuṁ dve kumārā, ",
  "pv41:1.4": "rājaputtāti me sutaṁ. ",
  "pv41:2.1": "Sammattā rajanīyesu, ",
  "pv41:2.2": "kāmassādābhinandino; ",
  "pv41:2.3": "Paccuppannasukhe giddhā, ",
  "pv41:2.4": "na te passiṁsunāgataṁ. ",
  "pv41:3.1": "Te cutā ca manussattā, ",
  "pv41:3.2": "paralokaṁ ito gatā; ",
  "pv41:3.3": "Tedha ghosentyadissantā, ",
  "pv41:3.4": "pubbe dukkaṭamattano. ",
  "pv41:4.1": "Bahūsu vata santesu, ",
  "pv41:4.2": "deyyadhamme upaṭṭhite; ",
  "pv41:4.3": "Nāsakkhimhā ca attānaṁ, ",
  "pv41:4.4": "parittaṁ kātuṁ sukhāvahaṁ. ",
  "pv41:5.1": "Kiṁ tato pāpakaṁ assa, ",
  "pv41:5.2": "yaṁ no rājakulā cutā; ",
  "pv41:5.3": "Upapannā pettivisayaṁ, ",
  "pv41:5.4": "khuppipāsasamappitā. ",
  "pv41:6.1": "Sāmino idha hutvāna, ",
  "pv41:6.2": "honti asāmino tahiṁ; ",
  "pv41:6.3": "Bhamanti khuppipāsāya, ",
  "pv41:6.4": "manussā unnatonatā. ",
  "pv41:7.1": "Etamādīnavaṁ ñatvā, ",
  "pv41:7.2": "issaramadasambhavaṁ; ",
  "pv41:7.3": "Pahāya issaramadaṁ, ",
  "pv41:7.4": "bhave saggagato naro; ",
  "pv41:7.5": "Kāyassa bhedā sappañño, ",
  "pv41:7.6": "saggaṁ so upapajjatī”ti. ",
  "pv41:8.1": "Kumārapetavatthu chaṭṭhaṁ. "
}