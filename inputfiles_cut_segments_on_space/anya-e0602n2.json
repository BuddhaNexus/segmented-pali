{
  "anya-e0602n2:0": "Vāsamālinīkya",
  "anya-e0602n2:1": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n2:2": "1.",
  "anya-e0602n2:3": "Vuḍḍhopi jinānaṁ, buddhosi vijānaṁ;",
  "anya-e0602n2:4": "Pubboditi māhaṁ, kubbomi vimānaṁ.",
  "anya-e0602n2:5": "(Tanumajjhāgāthā)",
  "anya-e0602n2:6": "2.",
  "anya-e0602n2:7": "Mahāsamatakūlaṁ, narāpavarapūjaṁ;",
  "anya-e0602n2:8": "Jahā abhayapūraṁ, namā kanakarūpaṁ.",
  "anya-e0602n2:9": "(Kumāralalitāgāthā)",
  "anya-e0602n2:10": "3.",
  "anya-e0602n2:11": "Narāsabhasubuddhaṁ, pajāmatanuruttaṁ;",
  "anya-e0602n2:12": "Dayākaramuduttaṁ, namāma ha usukkaṁ.",
  "anya-e0602n2:13": "(Kumāralalitāgāthā)",
  "anya-e0602n2:14": "4.",
  "anya-e0602n2:15": "Hitaṁ vahasusīlo, pamodati sukhatte;",
  "anya-e0602n2:16": "Name tamapabuddhaṁ, jinaṁ gatasukhantaṁ.",
  "anya-e0602n2:17": "(Kumāralalitāgāthā)",
  "anya-e0602n2:18": "5.",
  "anya-e0602n2:19": "Bandhu ca santakileso, yo pitavaṇṇapabhāso;",
  "anya-e0602n2:20": "Gotamagottasuññato, tassa namo narasīho.",
  "anya-e0602n2:21": "(Citrapadāgāthā)",
  "anya-e0602n2:22": "6.",
  "anya-e0602n2:23": "Buddhaṁ suddhaṁ lokesītaṁ, ukkaṁ yuttaṁ yoge haṁ;",
  "anya-e0602n2:24": "Vantātītaṁ oghe sīdaṁ, vandāpīhaṁ sokehīhaṁ.",
  "anya-e0602n2:25": "(Vijjummālāgāthā)",
  "anya-e0602n2:26": "7.",
  "anya-e0602n2:27": "Bhogavatī yopakhamī, sītadayā lokasakhā;",
  "anya-e0602n2:28": "Dhātutaye kitti sa ve, dātu jaye-tassa ca me;",
  "anya-e0602n2:29": "(Māṇavakagāthā)",
  "anya-e0602n2:30": "8.",
  "anya-e0602n2:31": "Mānito lukho rutotha, sannibho subho sukho ca;",
  "anya-e0602n2:32": "Jānito dharo namo ca, tassa yo thuto guṇova.",
  "anya-e0602n2:33": "(Samānikāgāthā)",
  "anya-e0602n2:34": "9.",
  "anya-e0602n2:35": "Jayaṁ dhajaṁ pajāpuge, ṭhitaṁ lilaṁ mahāsukhe;",
  "anya-e0602n2:36": "Subhaṁ phuṭaṁ pabhaṁ name, hitaṁ sukhaṁ dadātu me.",
  "anya-e0602n2:37": "(Pamāṇikāgāthā)",
  "anya-e0602n2:38": "10.",
  "anya-e0602n2:39": "Puṇṇapuññajanitasubhaṁ, jātiñātithutiyaguṇaṁ;",
  "anya-e0602n2:40": "Bhedaveravimalajinaṁ, ñāṇapādacaraṇa-mahaṁ.",
  "anya-e0602n2:41": "(Halamukhīgāthā)",
  "anya-e0602n2:42": "11.",
  "anya-e0602n2:43": "Sati mati suci yo-bhāso, thuti muni sukhito kāyo;",
  "anya-e0602n2:44": "Manujapumasuto nātho, jayavara mu-sabho dāto.",
  "anya-e0602n2:45": "(Bhujagasusugāthā)",
  "anya-e0602n2:46": "12.",
  "anya-e0602n2:47": "Yo buddho pavaro lilo puge,",
  "anya-e0602n2:48": "Lokutto abhayo ṭhito sukhe;",
  "anya-e0602n2:49": "Uttiṇṇaṁ nisabhaṁ hitaṁ vahe,",
  "anya-e0602n2:50": "Monindaṁ vimalaṁ jinaṁ name.",
  "anya-e0602n2:51": "(Suddhavirājitagāthā)",
  "anya-e0602n2:52": "13.",
  "anya-e0602n2:53": "Devindaṁ varagaṇatherindaṁ,",
  "anya-e0602n2:54": "Niṭṭhānaṁ bhavajananibbānaṁ;",
  "anya-e0602n2:55": "Niddosaṁ raṇarajanipphoṭaṁ,",
  "anya-e0602n2:56": "Vande-haṁ subhamukhasoṇṇemaṁ.",
  "anya-e0602n2:57": "(Paṇavagāthā)",
  "anya-e0602n2:58": "14.",
  "anya-e0602n2:59": "Gotamagotte ketuva ñātaṁ,",
  "anya-e0602n2:60": "Lokajakhette meruva jātaṁ;",
  "anya-e0602n2:61": "Thandilajeṭṭhe bheditamāraṁ,",
  "anya-e0602n2:62": "Paṇḍitamajjhe medhiva bhāṇaṁ;",
  "anya-e0602n2:63": "Mantiya vande sevitanāthaṁ.",
  "anya-e0602n2:64": "(Rummavatīgāthā)",
  "anya-e0602n2:65": "15.",
  "anya-e0602n2:66": "Buddho sukko amitaguṇīso,",
  "anya-e0602n2:67": "Yutto mutto sasiva timīto;",
  "anya-e0602n2:68": "Khe yo tejo tapasiva akko,",
  "anya-e0602n2:69": "Phelo theto tava namakāro.",
  "anya-e0602n2:70": "(Mattāgāthā)",
  "anya-e0602n2:71": "16.",
  "anya-e0602n2:72": "Yo jitamāre ve aji sabbaṁ,",
  "anya-e0602n2:73": "Tho mitasāre he-dhitapattaṁ;",
  "anya-e0602n2:74": "Saṁsitapuṇṇo so nami tassa,",
  "anya-e0602n2:75": "Paṇḍitaphullo so matikassa.",
  "anya-e0602n2:76": "(Campakamālāgāthā)",
  "anya-e0602n2:77": "17.",
  "anya-e0602n2:78": "Kanakarūpa mūpameyyakaṁ,",
  "anya-e0602n2:79": "Pavarasūra pūjasevataṁ;",
  "anya-e0602n2:80": "Kamalabhūma dhūradesakaṁ,",
  "anya-e0602n2:81": "Naramarūpa rū name ta-haṁ.",
  "anya-e0602n2:82": "(Manoramāgāthā)",
  "anya-e0602n2:83": "18.",
  "anya-e0602n2:84": "Deve gate dvevārā gamāsi,",
  "anya-e0602n2:85": "Sele cale ye ñātā pacāyi;",
  "anya-e0602n2:86": "Uddhaṁ tale tevāsaṁ akāsi,",
  "anya-e0602n2:87": "Buddhaṁ mate esāhaṁ namāmi.",
  "anya-e0602n2:88": "(Ubbhāsakantagāthā)",
  "anya-e0602n2:89": "19.",
  "anya-e0602n2:90": "Ukke sunutaṁ puthukañca theraṁ,",
  "anya-e0602n2:91": "Vutte sukhumaṁ ujukaṁ tathetaṁ;",
  "anya-e0602n2:92": "Dibbe paṭimaṁ kiriyaṁ vadetaṁ,",
  "anya-e0602n2:93": "Iddhe mahitaṁ kathitaṁ namehaṁ.",
  "anya-e0602n2:94": "(Upaṭṭhitagāthā)",
  "anya-e0602n2:95": "20. Dibbassa pūre pavarehi gutto,",
  "anya-e0602n2:96": "Siddhattha bhūte nagarehi vuṭṭho;",
  "anya-e0602n2:97": "Saṅkassa pūre ma-gaṇehi buddho,",
  "anya-e0602n2:98": "Aññattha pūje paname ni kubbo.",
  "anya-e0602n2:99": "(Indavajirāgāthā)",
  "anya-e0602n2:100": "21.",
  "anya-e0602n2:101": "Subhaṁ thutaṁ yo rajataṁ balatthaṁ,",
  "anya-e0602n2:102": "Yugaṁ hutaṁ so kanakaṁ kamatthaṁ;",
  "anya-e0602n2:103": "Citaṁ ṭhitaṁ lohitakaṁ manāpaṁ,",
  "anya-e0602n2:104": "Lilaṁ itaṁ soraci taṁ namāhaṁ.",
  "anya-e0602n2:105": "(Upendavajirāgāthā)",
  "anya-e0602n2:106": "22.",
  "anya-e0602n2:107": "Pinitaṁ viṇaṁ sakhilaṁ yaji taṁ,",
  "anya-e0602n2:108": "Susukhaṁ dhujaṁ biluvaṁ niyutaṁ;",
  "anya-e0602n2:109": "Ṭhapiyaṁ simaṁ thunutaṁ puthulaṁ,",
  "anya-e0602n2:110": "Nami haṁ khiṇaṁ sukhumaṁ mudukaṁ.",
  "anya-e0602n2:111": "(Sumukhīgāthā)",
  "anya-e0602n2:112": "23.",
  "anya-e0602n2:113": "Sogati bodhayiṁ gāhiya pattaṁ,",
  "anya-e0602n2:114": "Otari sonami jānita atthaṁ;",
  "anya-e0602n2:115": "Bhūpati pūjayi sākiya vaṁsaṁ,",
  "anya-e0602n2:116": "Sūjadhi ūpadhi bhāsita dhammaṁ.",
  "anya-e0602n2:117": "(Dodhakagāthā)",
  "anya-e0602n2:118": "24.",
  "anya-e0602n2:119": "Cattāro-me yācite so pavutthe,",
  "anya-e0602n2:120": "Laddhā bhoge kāmite oghamutte;",
  "anya-e0602n2:121": "Kattā tose-taṁ name colayutte,",
  "anya-e0602n2:122": "Tatthā-loke taṁpate kho padukke.",
  "anya-e0602n2:123": "(Sālinīgāthā)",
  "anya-e0602n2:124": "25.",
  "anya-e0602n2:125": "Sattā-loko sarito yo dhajukkaṁ,",
  "anya-e0602n2:126": "Tatthā-gopo raciyo-noja-muddhaṁ;",
  "anya-e0602n2:127": "Bhaddā-soko-pacito-bho pabuddhaṁ,",
  "anya-e0602n2:128": "Saddhāyogo bhaji so-ho-namuccaṁ.",
  "anya-e0602n2:129": "(Vātompīgāthā)",
  "anya-e0602n2:130": "26.",
  "anya-e0602n2:131": "Ñātamarūnaṁ upari ṭhitānaṁ,",
  "anya-e0602n2:132": "Vālapasūkaṁ huvati jinānaṁ;",
  "anya-e0602n2:133": "Devasuyāmo jinamiti ñāto,",
  "anya-e0602n2:134": "Tena sukhā-bho vinami idā so.",
  "anya-e0602n2:135": "(Sirīgāthā)",
  "anya-e0602n2:136": "27.",
  "anya-e0602n2:137": "Puṇṇakena kusumena sevataṁ,",
  "anya-e0602n2:138": "Kuñjareva thunutena khe gataṁ;",
  "anya-e0602n2:139": "Sundarena nami tena me jayaṁ,",
  "anya-e0602n2:140": "Puññatejakari-dhesa ve dadaṁ.",
  "anya-e0602n2:141": "(Rathoddhatāgāthā)",
  "anya-e0602n2:142": "28.",
  "anya-e0602n2:143": "Mātu āyu khiṇu-ke iha pubbe,",
  "anya-e0602n2:144": "Tāsu sādhu visute-disakucce;",
  "anya-e0602n2:145": "Vāta tāla khaciteni-dha soṇṇe,",
  "anya-e0602n2:146": "“Tāta tāta” yaji te-tisa vande.",
  "anya-e0602n2:147": "(Svāgatagāthā)",
  "anya-e0602n2:148": "29.",
  "anya-e0602n2:149": "Upari kamalayoni sobhitaṁ,",
  "anya-e0602n2:150": "Juhati dhavalajoti-dositaṁ;",
  "anya-e0602n2:151": "Sukari ya-matabodhi-mocitaṁ,",
  "anya-e0602n2:152": "Sunami caraṇaloki-dho-rimaṁ.",
  "anya-e0602n2:153": "(Bhaddikāgāthā)",
  "anya-e0602n2:154": "30.",
  "anya-e0602n2:155": "Vane jino yo vinayaṁ supekkhi-maṁ,",
  "anya-e0602n2:156": "Mate ṭhito-bho dijakaṁ dubajjitaṁ;",
  "anya-e0602n2:157": "Aghe-nidho khobhi-taraṁ mune-cchi-daṁ,",
  "anya-e0602n2:158": "Name-bhito bodhimahaṁ lukha-jjhitaṁ.",
  "anya-e0602n2:159": "(Vaṁsaṭṭhagāthā)",
  "anya-e0602n2:160": "31.",
  "anya-e0602n2:161": "Yo jāti-domānī-mupāsi lambi taṁ,",
  "anya-e0602n2:162": "Kodhehi lokehi dubhāsi paṇḍitaṁ;",
  "anya-e0602n2:163": "Pūrepi mūlepi pahāsi diṭṭhikaṁ,",
  "anya-e0602n2:164": "Sabbehi pattehi namāmi icchitaṁ.",
  "anya-e0602n2:165": "(Indavaṁsāgāthā)",
  "anya-e0602n2:166": "32.",
  "anya-e0602n2:167": "Verañjake pūravare vibhūsite,",
  "anya-e0602n2:168": "Nelañjane dūmavane vikūjite;",
  "anya-e0602n2:169": "Khemaṅkare thūlatare vidū site,",
  "anya-e0602n2:170": "Eta-ṅgame pūna name virūpi ve.",
  "anya-e0602n2:171": "(Indavaṁsāgāthā)",
  "anya-e0602n2:172": "33.",
  "anya-e0602n2:173": "Adhunāpi sa sārisuto nimalaṁ,",
  "anya-e0602n2:174": "Tamupāsi matāpi kuto ci nayaṁ;",
  "anya-e0602n2:175": "Karuṇāyi dha yāci budho vinayaṁ,",
  "anya-e0602n2:176": "Garukāpi namāmi su-yo jita-haṁ.",
  "anya-e0602n2:177": "(Toṭakagāthā)",
  "anya-e0602n2:178": "34.",
  "anya-e0602n2:179": "Janavaro muni so sarito vane,",
  "anya-e0602n2:180": "Vasabhato udito-pari gotame;",
  "anya-e0602n2:181": "Gamanaso guṇiko gami-to name,",
  "anya-e0602n2:182": "Nagara-do juti-mo ghatito-sathe.",
  "anya-e0602n2:183": "(Dutavilambitagāthā)",
  "anya-e0602n2:184": "35.",
  "anya-e0602n2:185": "Bhagavati kuṭigāre yo nisinne,",
  "anya-e0602n2:186": "Dhanavati suvisāle-ko isinde;",
  "anya-e0602n2:187": "Ya-malabhi muni lābhe molichinne,",
  "anya-e0602n2:188": "Sa panami juti-māse-to kilinne.",
  "anya-e0602n2:189": "(Puṭagāthā)",
  "anya-e0602n2:190": "36.",
  "anya-e0602n2:191": "Paṭhapita-miccassa sidatu sabbaṁ,",
  "anya-e0602n2:192": "Paṭhami-dha sikkhassa hitasukhatthaṁ;",
  "anya-e0602n2:193": "Pavadiya giddhassa khiṇalukhatthaṁ,",
  "anya-e0602n2:194": "Panami ca kiccassa sikhamukappaṁ.",
  "anya-e0602n2:195": "(Kusumavicittāgāthā)",
  "anya-e0602n2:196": "37.",
  "anya-e0602n2:197": "Nilobhāsi dhūmehi yu-cco vilāse,",
  "anya-e0602n2:198": "Ṭhito cā-bhi bhū tehi rukkho-digāhe;",
  "anya-e0602n2:199": "Yi-to tāni pūrepi luddho dvivāre,",
  "anya-e0602n2:200": "Jino-kāsi pūjemi buddho hitā-se.",
  "anya-e0602n2:201": "(Bhujaṅgappayātagāthā)",
  "anya-e0602n2:202": "38.",
  "anya-e0602n2:203": "Janarame dasasare visālake,",
  "anya-e0602n2:204": "Munivare kuṭighare-riyāpathe;",
  "anya-e0602n2:205": "Dhutatare-subhakathe caji sa ve,",
  "anya-e0602n2:206": "Tatiyake-ta-midha ve ṭhapi name.",
  "anya-e0602n2:207": "(Piyaṁvadāgāthā)",
  "anya-e0602n2:208": "39.",
  "anya-e0602n2:209": "Vesālike tu vasi kātu cātukaṁ,",
  "anya-e0602n2:210": "Te ñāhi tesu labhi-dhā-mukā-mukaṁ;",
  "anya-e0602n2:211": "Negāmikesu bhaji phāsu sā-yukaṁ,",
  "anya-e0602n2:212": "Etā-dhikesu nami-kāsu-dā-tulaṁ.",
  "anya-e0602n2:213": "(Lalitāgāthā)",
  "anya-e0602n2:214": "40.",
  "anya-e0602n2:215": "Vadi suppiyo duvacanaṁ tamato,",
  "anya-e0602n2:216": "Sahi muttiko guṇakathaṁ tathato;",
  "anya-e0602n2:217": "Gami māṇavo durapathaṁ carato,",
  "anya-e0602n2:218": "Nami sādhavo budhavaraṁ paraso.",
  "anya-e0602n2:219": "(Pamitakkharāgāthā)",
  "anya-e0602n2:220": "41.",
  "anya-e0602n2:221": "Yu-pagami vimalo sakhilo tadā,",
  "anya-e0602n2:222": "Yuvavati-pivano rami yo brahmā;",
  "anya-e0602n2:223": "Ekasayi ṭhitato kathi kho guṇe,",
  "anya-e0602n2:224": "Esa nami jina-mo padhi-do-juke.",
  "anya-e0602n2:225": "(Ujjalāgāthā)",
  "anya-e0602n2:226": "42.",
  "anya-e0602n2:227": "Jānaṁ sabbesaṁ desi yo kho-dhimuttaṁ,",
  "anya-e0602n2:228": "Ānandattheraṁ vedito coḷisuttaṁ;",
  "anya-e0602n2:229": "Kāyassammukhe kātuno-lokiyaṁ-se,",
  "anya-e0602n2:230": "Ṭhāna-ssa-ppuge kāruṇo hoti vande.",
  "anya-e0602n2:231": "(Vessadevī gāthā)",
  "anya-e0602n2:232": "43.",
  "anya-e0602n2:233": "Sukathiya majjhimasīla-maparaṁ,",
  "anya-e0602n2:234": "Yu-pacita-metthi-dha cīra-manayaṁ;",
  "anya-e0602n2:235": "Budhayi ca bhajjita-mīṇavataraṁ,",
  "anya-e0602n2:236": "Sunami pavajjita-mīha-mamalaṁ.",
  "anya-e0602n2:237": "(Tāmarasagāthā)",
  "anya-e0602n2:238": "44.",
  "anya-e0602n2:239": "Mahakañhi sīlampi abhāsi kante,",
  "anya-e0602n2:240": "Brahmathandilī mamhi manāpi ramme;",
  "anya-e0602n2:241": "Calakampi gīrampi kadāci ambe,",
  "anya-e0602n2:242": "Varapaṇḍi khīṇampi namāmi taṁ ve.",
  "anya-e0602n2:243": "(Kamalāgāthā)",
  "anya-e0602n2:244": "45.",
  "anya-e0602n2:245": "Mohante jini paṭhame jaye jitāyaṁ,",
  "anya-e0602n2:246": "Soramme isipatane vane nivāsaṁ.",
  "anya-e0602n2:247": "Khobhante kiri sakale vade vilāsaṁ,",
  "anya-e0602n2:248": "Ghoraṁve vinidamane name jinā-haṁ.",
  "anya-e0602n2:249": "(Pahāsinīgāthā)",
  "anya-e0602n2:250": "46.",
  "anya-e0602n2:251": "Divārakaṁ bajanagaraṁ phitaṁ vase,",
  "anya-e0602n2:252": "Nisāya taṁ janagaṇanaṁ ṭhitaṁ mate;",
  "anya-e0602n2:253": "Vijānakaṁ tamajaṭakaṁ sitaṁ vane,",
  "anya-e0602n2:254": "Hitāvahaṁ narapavaraṁ imaṁ name.",
  "anya-e0602n2:255": "(Ruciragāthā)",
  "anya-e0602n2:256": "47.",
  "anya-e0602n2:257": "Racita-maviralaṁ manussa mathā paṇaṁ,",
  "anya-e0602n2:258": "Pasiya tatiyakaṁ catuttha makā sayaṁ;",
  "anya-e0602n2:259": "Karita-madhikataṁ akhubbhamalā sabhaṁ,",
  "anya-e0602n2:260": "Jahitagatiparaṁ panujja namāma-haṁ.",
  "anya-e0602n2:261": "(Parājitāgāthā)",
  "anya-e0602n2:262": "48.",
  "anya-e0602n2:263": "Nagara-majaya-mesa nivasi tha pare,",
  "anya-e0602n2:264": "Mahati sa maṇike sakuṇakujavane;",
  "anya-e0602n2:265": "Yapati vasati ve hitasivavahane,",
  "anya-e0602n2:266": "Surata mubhayame-sita mima paname.",
  "anya-e0602n2:267": "(Paharaṇakalikāgāthā)",
  "anya-e0602n2:268": "49.",
  "anya-e0602n2:269": "Chaṭṭhaṁ vase athu-da tattha vane mune saṁ,",
  "anya-e0602n2:270": "Sabbaṁ dhare makulapabbatake upedaṁ;",
  "anya-e0602n2:271": "Cattaṁ male manuja matthavase sudesaṁ,",
  "anya-e0602n2:272": "Bhattaṁ name lahuka mappa mare dhune taṁ.",
  "anya-e0602n2:273": "(Vasantatilakagāthā)",
  "anya-e0602n2:274": "50.",
  "anya-e0602n2:275": "Nuna upavasati idha tha puna parime,",
  "anya-e0602n2:276": "Sukhaguṇamahati tidasapura ajite;",
  "anya-e0602n2:277": "Yuganuta mavadi vitatha mughatari ve,",
  "anya-e0602n2:278": "Hutathuna manami simada tula mariye.",
  "anya-e0602n2:279": "(Sasikalāgāthā)",
  "anya-e0602n2:280": "51.",
  "anya-e0602n2:281": "Jinapati susumāraṁ bhesakallāvane-saṁ,",
  "anya-e0602n2:282": "Nivasati puthuñāṇaṁ khve-sa nandālaye-taṁ;",
  "anya-e0602n2:283": "Vimala-mi dhu-jukāyaṁ bhedasantāpa-sesaṁ,",
  "anya-e0602n2:284": "Vijaha-pi sukhumālaṁ esamantā name-haṁ.",
  "anya-e0602n2:285": "(Mālinīgāthā)",
  "anya-e0602n2:286": "52.",
  "anya-e0602n2:287": "Mahati sukantiye atha ca tattha sītale,",
  "anya-e0602n2:288": "Vasati kusambiye navamavassa-pī-tare;",
  "anya-e0602n2:289": "Avahi sukha-ntime pajaha-mattha-mī-dha ve,",
  "anya-e0602n2:290": "Panami nudaṁ hine sakalasatthavasaye.",
  "anya-e0602n2:291": "(Pabhaddakagāthā)",
  "anya-e0602n2:292": "53.",
  "anya-e0602n2:293": "Yudhavati pālileyyaka vane pahāya nāge,",
  "anya-e0602n2:294": "Upaṭhahi nāgi-dhe-sa dasame jahāya bāle;",
  "anya-e0602n2:295": "Sukhavasi kāyike ca manake tadāsa sāte,",
  "anya-e0602n2:296": "Yuta-madhi vāhite ca paname payāta māre.",
  "anya-e0602n2:297": "(Vāṇinīgāthā)",
  "anya-e0602n2:298": "54.",
  "anya-e0602n2:299": "Ito patte nāḷe vasati dijagāmepi dasame,",
  "anya-e0602n2:300": "Hitopatthenā-yeka adhiki-dha vādehi vadake;",
  "anya-e0602n2:301": "Vilomatthehā-neka-sahi ṭhita-māghepi samaye,",
  "anya-e0602n2:302": "Viyogatthe-tā-neja-mapi pihavāsehi paname.",
  "anya-e0602n2:303": "(Sikharaṇīgāthā)",
  "anya-e0602n2:304": "55.",
  "anya-e0602n2:305": "Dviadhiki-tare verañjāyaṁ tato dasamaṁ pare,",
  "anya-e0602n2:306": "Nivasi nilake khedaṅghātaṁ karo paramaṁ vane;",
  "anya-e0602n2:307": "Kilami idha ve vehaṅgānaṁ manoramakaṁ vase,",
  "anya-e0602n2:308": "Viraji-sigaṇe medhaṅkāraṁ asokadadaṁ name.",
  "anya-e0602n2:309": "(Hiriṇīgāthā)",
  "anya-e0602n2:310": "56.",
  "anya-e0602n2:311": "Yo sampuṇṇe upari tirase cāliye pabbatepi,",
  "anya-e0602n2:312": "Sobhaṁ phulle suvasi itare kāmite appamehi;",
  "anya-e0602n2:313": "Sāvatthikkenu-da catudase kārite ālayepi,",
  "anya-e0602n2:314": "Kāmo-cchidde tu bhaya muname ñātime dvārakehi.",
  "anya-e0602n2:315": "(Mandakkantāgāthā)",
  "anya-e0602n2:316": "57.",
  "anya-e0602n2:317": "Sakko kappile kariya madake niggaho yoti pañce,",
  "anya-e0602n2:318": "Dakkho kappiye vasidha yamake iddhako bhohi aññe;",
  "anya-e0602n2:319": "Yakkho dabbike damiya nagare soḷase-topi vaṅke,",
  "anya-e0602n2:320": "Aggo-ghattite paciya paname bodhake monipaññe.",
  "anya-e0602n2:321": "(Kusumitalatāvellitagāthā)",
  "anya-e0602n2:322": "58.",
  "anya-e0602n2:323": "Duladdhe pūre yopari ca dasato rājagehaṁ bhajanto,",
  "anya-e0602n2:324": "Tu satte kūle kho kari dha yapato vāsamejaṁ jahanto;",
  "anya-e0602n2:325": "Dumaṭṭhe pūneso ramita-calato ṭṭhārasetaṁ dadaṁ so,",
  "anya-e0602n2:326": "Guṇasse vūpeto namidha karabho kāyakhedaṁ sahanto.",
  "anya-e0602n2:327": "(Meghavipphujjitagāthā)",
  "anya-e0602n2:328": "59.",
  "anya-e0602n2:329": "Cālīye parime tatheva acale-kūnepi vīse lilaṁ,",
  "anya-e0602n2:330": "Bhāgī ce sa hite pageva pavase sūrehi nisevitaṁ;",
  "anya-e0602n2:331": "Kārite ramike pare ca nagare pūrepi vīse imaṁ,",
  "anya-e0602n2:332": "Hārite vasime jahena paname mūlepi khīṇe jitaṁ.",
  "anya-e0602n2:333": "(Saddūlavikkīlitagāthā)",
  "anya-e0602n2:334": "60.",
  "anya-e0602n2:335": "Pañcapañca-mākare tatopi piṇḍakena jetakānane ca,",
  "anya-e0602n2:336": "Aññamañña-mādarena yo nisinnakena te ca māpayeva;",
  "anya-e0602n2:337": "Pubbapubbaārāme payoji-pāsikāya vāramāvasedha,",
  "anya-e0602n2:338": "Suddhasuddha-māmalena poriyātimāya mānasā namesa.",
  "anya-e0602n2:339": "(Vuttagāthā)",
  "anya-e0602n2:340": "Puññenā’nena saṁsāramupadhi suci sappūrise vo paseve,",
  "anya-e0602n2:341": "Tehā dinnaṁ sugāho suciparisaupeto arogo bhaveyyaṁ;",
  "anya-e0602n2:342": "Dīghāyūko mahāpañña yasadhanasulābho ca kalyāṇamitto,",
  "anya-e0602n2:343": "Lokādibbo ca maggo samamatiparivārova nibbānapatto.",
  "anya-e0602n2:344": "(Saddharāgāthā)",
  "anya-e0602n2:345": "Ka.",
  "anya-e0602n2:346": "Nassati sāsane chanavutādhike ca tivise sate kaliyuge,",
  "anya-e0602n2:347": "Dvesatacuddasādhikasahassake sakalaraṭṭhakaṁ khubhi gate;",
  "anya-e0602n2:348": "Bhātikayuddhakena nagaraṁ tadā bhavati chārikā yatigaṇo,",
  "anya-e0602n2:349": "Dukkhagato mahāpaharaṇehi jivitakhayampi eti piṭake.",
  "anya-e0602n2:350": "(Bhaddakagāthā)",
  "anya-e0602n2:351": "Kha.",
  "anya-e0602n2:352": "Udisaka cetyakepi vikiriya nāsati dha so thiro sagaṇato,",
  "anya-e0602n2:353": "Vijahiya purato ttaravaneka kumbhakaragāmakaṁ nivasaye;",
  "anya-e0602n2:354": "Satagaṇakehi tattha janakopi “bhota idha vāsa sabbayatinaṁ,",
  "anya-e0602n2:355": "Upaṭṭhahamī”ti tamhi katipāhanaṁ vasati kho vimaṁsiya sukhaṁ.",
  "anya-e0602n2:356": "(Lalitagāthā)",
  "anya-e0602n2:357": "Ga.",
  "anya-e0602n2:358": "Tattha araññe ramito sucari saddhamma-timāni suyatīhi tipīko,",
  "anya-e0602n2:359": "Dhūrasuyutto parigāhiya sujāto supaṭṭhāti kunadita-muyānaṁ;",
  "anya-e0602n2:360": "So satamaccehi kataṁ nagari daṁ tassa ca pācina raha dhikakose,",
  "anya-e0602n2:361": "Paccayanāyāsu da chāyabahuko suddhayatipi idha vasanakāle.",
  "anya-e0602n2:362": "(Tanugāthā)",
  "anya-e0602n2:363": "Gha.",
  "anya-e0602n2:364": "Phagguṇamāse chadine raciya niṭṭhaṁva gato paramari iminā-yaṁ,",
  "anya-e0602n2:365": "Sijjhatu pemaṁ vata rakkhatu sudevo uda vaḍḍhatu jinavacane taṁ;",
  "anya-e0602n2:366": "Vāsamālinī niṭṭhitā."
}