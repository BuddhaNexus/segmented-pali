{
  "tha-ap303:0.1": "Therāpadāna ",
  "tha-ap303:0.2": "Padumakesaravagga ",
  "tha-ap303:0.3": "1. Padumakesariyattheraapadāna ",
  "tha-ap303:1.1": "“Isisaṅghe ahaṁ pubbe, ",
  "tha-ap303:1.2": "āsiṁ mātaṅgavāraṇo; ",
  "tha-ap303:1.3": "Mahesīnaṁ pasādena, ",
  "tha-ap303:1.4": "padmakesaramokiriṁ. ",
  "tha-ap303:2.1": "Paccekajinaseṭṭhesu, ",
  "tha-ap303:2.2": "dhutarāgesu tādisu; ",
  "tha-ap303:2.3": "Tesu cittaṁ pasādetvā, ",
  "tha-ap303:2.4": "kappaṁ saggamhi modahaṁ. ",
  "tha-ap303:3.1": "Ekanavutito kappe, ",
  "tha-ap303:3.2": "kesaraṁ okiriṁ tadā; ",
  "tha-ap303:3.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap303:3.4": "buddhapūjāyidaṁ phalaṁ. ",
  "tha-ap303:4.1": "Paṭisambhidā catasso, ",
  "tha-ap303:4.2": "vimokkhāpi ca aṭṭhime; ",
  "tha-ap303:4.3": "Chaḷabhiññā sacchikatā, ",
  "tha-ap303:4.4": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap303:5.1": "Itthaṁ sudaṁ āyasmā padumakesariyo thero imā gāthāyo abhāsitthāti. ",
  "tha-ap303:6.1": "Padumakesariyattherassāpadānaṁ paṭhamaṁ. "
}