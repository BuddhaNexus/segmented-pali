{
  "cp31:0.1": "Cariyāpiṭaka ",
  "cp31:0.2": "Yudhañjayavagga ",
  "cp31:0.3": "Saccapāramī 5 ",
  "cp31:0.4": "Kaṇhadīpāyanacariya ",
  "cp31:1.1": "“Punāparaṁ yadā homi, ",
  "cp31:1.2": "kaṇhadīpāyano isi; ",
  "cp31:1.3": "Paropaññāsavassāni, ",
  "cp31:1.4": "anabhiratocariṁ ahaṁ. ",
  "cp31:2.1": "Na koci etaṁ jānāti, ",
  "cp31:2.2": "Anabhiratimanaṁ mama; ",
  "cp31:2.3": "Ahañhi kassaci nācikkhiṁ, ",
  "cp31:2.4": "Arati me carati mānase. ",
  "cp31:3.1": "Sabrahmacārī maṇḍabyo, ",
  "cp31:3.2": "sahāyo me mahāisi; ",
  "cp31:3.3": "Pubbakammasamāyutto, ",
  "cp31:3.4": "sūlamāropanaṁ labhi. ",
  "cp31:4.1": "Tamahaṁ upaṭṭhahitvāna, ",
  "cp31:4.2": "ārogyamanupāpayiṁ; ",
  "cp31:4.3": "Āpucchitvāna āgañchiṁ, ",
  "cp31:4.4": "yaṁ mayhaṁ sakamassamaṁ. ",
  "cp31:5.1": "Sahāyo brāhmaṇo mayhaṁ, ",
  "cp31:5.2": "bhariyaṁ ādāya puttakaṁ; ",
  "cp31:5.3": "Tayo janā samāgantvā, ",
  "cp31:5.4": "āgañchuṁ pāhunāgataṁ. ",
  "cp31:6.1": "Sammodamāno tehi saha, ",
  "cp31:6.2": "nisinno sakamassame; ",
  "cp31:6.3": "Dārako vaṭṭamanukkhipaṁ, ",
  "cp31:6.4": "āsīvisamakopayi. ",
  "cp31:7.1": "Tato so vaṭṭagataṁ maggaṁ, ",
  "cp31:7.2": "anvesanto kumārako; ",
  "cp31:7.3": "Āsīvisassa hatthena, ",
  "cp31:7.4": "uttamaṅgaṁ parāmasi. ",
  "cp31:8.1": "Tassa āmasane kuddho, ",
  "cp31:8.2": "sappo visabalassito; ",
  "cp31:8.3": "Kupito paramakopena, ",
  "cp31:8.4": "aḍaṁsi dārakaṁ khaṇe. ",
  "cp31:9.1": "Sahadaṭṭho āsīvisena, ",
  "cp31:9.2": "dārako papati bhūmiyaṁ; ",
  "cp31:9.3": "Tenāhaṁ dukkhito āsiṁ, ",
  "cp31:9.4": "mama vāhasi taṁ dukkhaṁ. ",
  "cp31:10.1": "Tyāhaṁ assāsayitvāna, ",
  "cp31:10.2": "dukkhite sokasallite; ",
  "cp31:10.3": "Paṭhamaṁ akāsiṁ kiriyaṁ, ",
  "cp31:10.4": "aggaṁ saccaṁ varuttamaṁ. ",
  "cp31:11.1": "‘Sattāhamevāhaṁ pasannacitto, ",
  "cp31:11.2": "Puññatthiko acariṁ brahmacariyaṁ; ",
  "cp31:11.3": "Athāparaṁ yaṁ caritaṁ mamedaṁ, ",
  "cp31:11.4": "Vassāni paññāsasamādhikāni. ",
  "cp31:12.1": "Akāmako vāhi ahaṁ carāmi, ",
  "cp31:12.2": "Etena saccena suvatthi hotu; ",
  "cp31:12.3": "Hataṁ visaṁ jīvatu yaññadatto’. ",
  "cp31:13.1": "Saha sacce kate mayhaṁ, ",
  "cp31:13.2": "visavegena vedhito; ",
  "cp31:13.3": "Abujjhitvāna vuṭṭhāsi, ",
  "cp31:13.4": "arogo cāsi māṇavo; ",
  "cp31:13.5": "Saccena me samo natthi, ",
  "cp31:13.6": "esā me saccapāramī”ti. ",
  "cp31:14.1": "Kaṇhadīpāyanacariyaṁ ekādasamaṁ. "
}