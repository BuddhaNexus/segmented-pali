{
  "tha-ap15:0.1": "Therāpadāna ",
  "tha-ap15:0.2": "Sīhāsaniyavagga ",
  "tha-ap15:0.3": "3. Nandattheraapadāna ",
  "tha-ap15:1.1": "“Padumuttarassa bhagavato, ",
  "tha-ap15:1.2": "Lokajeṭṭhassa tādino; ",
  "tha-ap15:1.3": "Vatthaṁ khomaṁ mayā dinnaṁ, ",
  "tha-ap15:1.4": "Sayambhussa mahesino. ",
  "tha-ap15:2.1": "Taṁ me buddho viyākāsi, ",
  "tha-ap15:2.2": "jalajuttaranāmako; ",
  "tha-ap15:2.3": "‘Iminā vatthadānena, ",
  "tha-ap15:2.4": "hemavaṇṇo bhavissasi. ",
  "tha-ap15:3.1": "Dve sampattī anubhotvā, ",
  "tha-ap15:3.2": "kusalamūlehi codito; ",
  "tha-ap15:3.3": "Gotamassa bhagavato, ",
  "tha-ap15:3.4": "kaniṭṭho tvaṁ bhavissasi. ",
  "tha-ap15:4.1": "Rāgaratto sukhasīlo, ",
  "tha-ap15:4.2": "kāmesu gedhamāyuto; ",
  "tha-ap15:4.3": "Buddhena codito santo, ",
  "tha-ap15:4.4": "tadā tvaṁ pabbajissasi. ",
  "tha-ap15:5.1": "Pabbajitvāna tvaṁ tattha, ",
  "tha-ap15:5.2": "kusalamūlena codito; ",
  "tha-ap15:5.3": "Sabbāsave pariññāya, ",
  "tha-ap15:5.4": "nibbāyissasināsavo’. ",
  "tha-ap15:6.1": "Satta kappasahassamhi, ",
  "tha-ap15:6.2": "caturo ceḷanāmakā; ",
  "tha-ap15:6.3": "Saṭṭhi kappasahassamhi, ",
  "tha-ap15:6.4": "upacelā catujjanā. ",
  "tha-ap15:7.1": "Pañca kappasahassamhi, ",
  "tha-ap15:7.2": "ceḷāva caturo janā; ",
  "tha-ap15:7.3": "Sattaratanasampannā, ",
  "tha-ap15:7.4": "catudīpamhi issarā. ",
  "tha-ap15:8.1": "Paṭisambhidā catasso, ",
  "tha-ap15:8.2": "vimokkhāpi ca aṭṭhime; ",
  "tha-ap15:8.3": "Chaḷabhiññā sacchikatā, ",
  "tha-ap15:8.4": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap15:9.1": "Itthaṁ sudaṁ āyasmā nando thero imā gāthāyo abhāsitthāti. ",
  "tha-ap15:10.1": "Nandattherassāpadānaṁ tatiyaṁ. "
}