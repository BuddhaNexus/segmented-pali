{
  "tha-ap93:0.1": "Therāpadāna ",
  "tha-ap93:0.2": "Sudhāvagga ",
  "tha-ap93:0.3": "1. Sudhāpiṇḍiyattheraapadāna ",
  "tha-ap93:1.1": "“Pūjārahe pūjayato, ",
  "tha-ap93:1.2": "buddhe yadi va sāvake; ",
  "tha-ap93:1.3": "Papañcasamatikkante, ",
  "tha-ap93:1.4": "tiṇṇasokapariddave. ",
  "tha-ap93:2.1": "Te tādise pūjayato, ",
  "tha-ap93:2.2": "nibbute akutobhaye; ",
  "tha-ap93:2.3": "Na sakkā puññaṁ saṅkhātuṁ, ",
  "tha-ap93:2.4": "imettamapi kenaci. ",
  "tha-ap93:3.1": "Catunnamapi dīpānaṁ, ",
  "tha-ap93:3.2": "issaraṁ yodha kāraye; ",
  "tha-ap93:3.3": "Ekissā pūjanāyetaṁ, ",
  "tha-ap93:3.4": "kalaṁ nāgghati soḷasiṁ. ",
  "tha-ap93:4.1": "Siddhatthassa naraggassa, ",
  "tha-ap93:4.2": "cetiye phalitantare; ",
  "tha-ap93:4.3": "Sudhāpiṇḍo mayā dinno, ",
  "tha-ap93:4.4": "vippasannena cetasā. ",
  "tha-ap93:5.1": "Catunnavutito kappe, ",
  "tha-ap93:5.2": "yaṁ kammamakariṁ tadā; ",
  "tha-ap93:5.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap93:5.4": "paṭisaṅkhārassidaṁ phalaṁ. ",
  "tha-ap93:6.1": "Ito tiṁsatikappamhi, ",
  "tha-ap93:6.2": "paṭisaṅkhārasavhayā; ",
  "tha-ap93:6.3": "Sattaratanasampannā, ",
  "tha-ap93:6.4": "terasa cakkavattino. ",
  "tha-ap93:7.1": "Paṭisambhidā catasso, ",
  "tha-ap93:7.2": "vimokkhāpi ca aṭṭhime; ",
  "tha-ap93:7.3": "Chaḷabhiññā sacchikatā, ",
  "tha-ap93:7.4": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap93:8.1": "Itthaṁ sudaṁ āyasmā sudhāpiṇḍiyo thero imā gāthāyo abhāsitthāti. ",
  "tha-ap93:9.1": "Sudhāpiṇḍiyattherassāpadānaṁ paṭhamaṁ. "
}