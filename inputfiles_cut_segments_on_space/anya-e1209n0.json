{
  "anya-e1209n0:0": "Telakaṭāhagāthā",
  "anya-e1209n0:1": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1209n0:2": "1.",
  "anya-e1209n0:3": "Laṃkissaro jayatu vāraṇarājagāmī",
  "anya-e1209n0:4": "Bhogindabhoga rucirāyata pīṇa bāhu,",
  "anya-e1209n0:5": "Sādhupacāranirato guṇasannivāso",
  "anya-e1209n0:6": "Dhamme ṭhito vīgatakodhamadāvalepo;",
  "anya-e1209n0:7": "2.",
  "anya-e1209n0:8": "Yo sabbalokamahito karuṇādhivāso",
  "anya-e1209n0:9": "Mokkhākaro ravikulambara puṇṇa cando,",
  "anya-e1209n0:10": "Ñeyyodadhiṃ suvipulaṃ sakalaṃ vibuddho",
  "anya-e1209n0:11": "Lokuttamaṃ namatha taṃ sirasā munindaṃ;",
  "anya-e1209n0:12": "3.",
  "anya-e1209n0:13": "Sopānamālamamalaṃ tidasālayassa",
  "anya-e1209n0:14": "Saṃsāra sāgarasamuttaraṇāya setuṃ,",
  "anya-e1209n0:15": "Sabbāgatībhaya vivajjita khema maggaṃ",
  "anya-e1209n0:16": "Dhammaṃ namassatha sadā muninā paṇītaṃ;",
  "anya-e1209n0:17": "4.",
  "anya-e1209n0:18": "Deyyaṃ tadappamapi yattha pasanna cittā",
  "anya-e1209n0:19": "Datvā narā phalamuḷārataraṃ labhante,",
  "anya-e1209n0:20": "Taṃ sabbadā dasabalenapi suppasatthaṃ",
  "anya-e1209n0:21": "Saṅghaṃ namassatha sadāmitapuññakhettaṃ;",
  "anya-e1209n0:22": "5.",
  "anya-e1209n0:23": "Tejo balena mahatā ratanattayassa",
  "anya-e1209n0:24": "Lokattayaṃ samadhigacchati yena mokkhaṃ,",
  "anya-e1209n0:25": "Rakkhā na catthi ca samā ratanattayassa",
  "anya-e1209n0:26": "Tasmā sadā bhajatha taṃ ratanattayaṃ bho;",
  "anya-e1209n0:27": "6.",
  "anya-e1209n0:28": "Laṃkissaro parahitekarato nirāso",
  "anya-e1209n0:29": "Rattimpi jāgararato karuṇādhivāso,",
  "anya-e1209n0:30": "Lokaṃ vibodhayati lokahitāya kāmaṃ",
  "anya-e1209n0:31": "Dhammaṃ samācaratha jāgariyānuyuttā;",
  "anya-e1209n0:32": "7.",
  "anya-e1209n0:33": "Sattopakāra niratā kusale sahāyā",
  "anya-e1209n0:34": "Bho dullabhā bhuvi narā vihatappamādā,",
  "anya-e1209n0:35": "Laṃkādhipaṃ guṇadhanaṃ kusale sahāyaṃ",
  "anya-e1209n0:36": "Āgamma saṃcaratha dhammamalaṃ pamādaṃ;",
  "anya-e1209n0:37": "8.",
  "anya-e1209n0:38": "Dhammo tiloka saraṇo paramo rasānaṃ",
  "anya-e1209n0:39": "Dhammo mahaggharatano ratanesu loke,",
  "anya-e1209n0:40": "Dhammo bhave tibhavadukkha vināsahetu",
  "anya-e1209n0:41": "Dhammaṃ samācaratha jāgariyānuyuttā;",
  "anya-e1209n0:42": "9.",
  "anya-e1209n0:43": "Niddaṃ vinodayatha bhāvayathappameyyaṃ",
  "anya-e1209n0:44": "Dukkhaṃ aniccampi ceha anattatañca,",
  "anya-e1209n0:45": "Dehe ratiṃ jahatha ja jajjarabhājanābho",
  "anya-e1209n0:46": "Dhammaṃ samācaratha jāgariyānuyuttā;",
  "anya-e1209n0:47": "10.",
  "anya-e1209n0:48": "Okāsa majja mama natthi suve karissaṃ",
  "anya-e1209n0:49": "Dhammaṃ itīhalasatā kusalappayoge,",
  "anya-e1209n0:50": "Nā’laṃ tiyaddhasu tathā bhuvanattaye ca",
  "anya-e1209n0:51": "Kāmaṃ na catthi manujo maraṇā pamutto;",
  "anya-e1209n0:52": "11.",
  "anya-e1209n0:53": "Khitto yathā nabhasi kenacideva leḍḍu",
  "anya-e1209n0:54": "Bhūmiṃ samāpatti bhāratayā khaṇena,",
  "anya-e1209n0:55": "Jātattameva khalu kāraṇamekamatra",
  "anya-e1209n0:56": "Lokaṃ sadā nanu dhuvaṃ maraṇāya gantuṃ;",
  "anya-e1209n0:57": "12.",
  "anya-e1209n0:58": "Kāmaṃ narassa patato girimuddhanāto",
  "anya-e1209n0:59": "Majjhe na kiñci bhayanissaraṇāya hetu,",
  "anya-e1209n0:60": "Kāmaṃ vajanti maraṇaṃ tibhavesu sattā",
  "anya-e1209n0:61": "Bhoge ratiṃ pajahathāpi ca jīvite ca;",
  "anya-e1209n0:62": "13.",
  "anya-e1209n0:63": "Kāmaṃ patanti mahiyā khalu vassadhārā",
  "anya-e1209n0:64": "Vijjullatā vitatamegha mukhā pamuttā,",
  "anya-e1209n0:65": "Evaṃ narā maraṇabhīma papātamajjhe",
  "anya-e1209n0:66": "Kāmaṃ patanti nahi koci bhavesu nicco;",
  "anya-e1209n0:67": "14.",
  "anya-e1209n0:68": "Velātaṭe paṭutaroru taraṃgamālā",
  "anya-e1209n0:69": "Nāsaṃ vajanti satataṃ salilālayassa,",
  "anya-e1209n0:70": "Nāsaṃ tathā samupayanti narāmarānaṃ",
  "anya-e1209n0:71": "Pāṇāni dāruṇatare maraṇodadhimhi;",
  "anya-e1209n0:72": "15.",
  "anya-e1209n0:73": "Ruddhopi so rathavarassagajādhipehi",
  "anya-e1209n0:74": "Yodhehi cāpi sabalehi ca sāyudhehi,",
  "anya-e1209n0:75": "Lokaṃ vivaṃciya sadā maraṇūsabho so",
  "anya-e1209n0:76": "Kāmaṃ nihanti bhuvanattaya sāli daṇḍaṃ;",
  "anya-e1209n0:77": "16.",
  "anya-e1209n0:78": "Bho mārutena mahatā vihato padīpo",
  "anya-e1209n0:79": "Khippaṃ vināsa mukhameti mahappabhopi,",
  "anya-e1209n0:80": "Loke tathā maraṇacaṇḍa samīraṇena",
  "anya-e1209n0:81": "Khippaṃ vinassati narāyumahā padīpo;",
  "anya-e1209n0:82": "17",
  "anya-e1209n0:83": "Rāmajjunappabhūti bhūpati puṃgavā ca",
  "anya-e1209n0:84": "Sūrā pure raṇamukhe vijitāri saṅghā,",
  "anya-e1209n0:85": "Tepīha caṇḍa maraṇogha nimuggadehā",
  "anya-e1209n0:86": "Nāsaṃ gatā jagati ke maraṇā pamuttā?",
  "anya-e1209n0:87": "18.",
  "anya-e1209n0:88": "Lakkhī ca sāgarapaṭā sadharādharā ca",
  "anya-e1209n0:89": "Sampattiyo ca vividhā api rūpasobhā,",
  "anya-e1209n0:90": "Sabbā ca tā api ca mittasutā ca dārā",
  "anya-e1209n0:91": "Ke cāpi kaṃ anugatā maraṇaṃ vajantaṃ?",
  "anya-e1209n0:92": "19.",
  "anya-e1209n0:93": "Brahmāsurāsuragaṇā ca mahānubhāvā",
  "anya-e1209n0:94": "Gandhabbakinnaramahoragarakkhasā ca,",
  "anya-e1209n0:95": "Te cā pare ca maraṇaggisikhāya sabbe",
  "anya-e1209n0:96": "Ante patanti salabhā iva khīṇapuññā;",
  "anya-e1209n0:97": "20.",
  "anya-e1209n0:98": "Ye sāriputtapamukhā munisāvakā ca",
  "anya-e1209n0:99": "Suddhā sadāsavanudā paramiddhipattā,",
  "anya-e1209n0:100": "Te cāpi maccuvaḷabhā mukha sannimuggā",
  "anya-e1209n0:101": "Dīpānivānalahatā khayataṃ upetā;",
  "anya-e1209n0:102": "21.",
  "anya-e1209n0:103": "Buddhāpi buddhakamalāmalacārunettā",
  "anya-e1209n0:104": "Battiṃsalakkhaṇa virājita rūpasobhā,",
  "anya-e1209n0:105": "Sabbāsacakkhayakarāpi ca lokanāthā",
  "anya-e1209n0:106": "Sammadditā maraṇamattamahāgajena;",
  "anya-e1209n0:107": "22.",
  "anya-e1209n0:108": "Rogāturesu karuṇā na jarāturesu",
  "anya-e1209n0:109": "Khiḍḍāparesu sukumārakumārakesu,",
  "anya-e1209n0:110": "Lokaṃ sadā hanati maccu mahāgajindo",
  "anya-e1209n0:111": "Davānalo vanamivāvarataṃ asesaṃ;",
  "anya-e1209n0:112": "23.",
  "anya-e1209n0:113": "Āpuṇṇatā na salile na jalāsayassa",
  "anya-e1209n0:114": "Kaṭṭhassa cāpi bahutā na hutāsanassa,",
  "anya-e1209n0:115": "Bhutvāna so tibhūvanampi tathā asesaṃ",
  "anya-e1209n0:116": "Bho niddayo na khalu pītimupeti maccu;",
  "anya-e1209n0:117": "24.",
  "anya-e1209n0:118": "Bho moha mohitatayā vivaso adhañño",
  "anya-e1209n0:119": "Loko patatyapipi maccumukhe subhīme,",
  "anya-e1209n0:120": "Bhoge ratiṃ samupayāti nihīnapañño",
  "anya-e1209n0:121": "Dolā taraṅgacapale supinopameyye;",
  "anya-e1209n0:122": "25.",
  "anya-e1209n0:123": "Ekopi maccurabhihantumalaṃ tilokaṃ",
  "anya-e1209n0:124": "Kiṃ niddayā api jarāmaraṇānuyāyī,",
  "anya-e1209n0:125": "Ko vā kareyya vibhasuvesu ca jīvitāsaṃ",
  "anya-e1209n0:126": "Jāto naro supina saṃgama sannibhesu;",
  "anya-e1209n0:127": "26.",
  "anya-e1209n0:128": "Niccāturaṃ jagadidaṃ sabhayaṃ sasokaṃ",
  "anya-e1209n0:129": "Disvā ca kodhamadamohajarābhibhūtaṃ,",
  "anya-e1209n0:130": "Ubbegamattamapi yassa na vijjatī ce",
  "anya-e1209n0:131": "So dāruṇona maraṇaṃ vata taṃ dhiratthu!",
  "anya-e1209n0:132": "Bho bho na passatha jarāsidharañhi maccu",
  "anya-e1209n0:133": "Māhaññamānamakhilaṃ satataṃ tilokaṃ,",
  "anya-e1209n0:134": "Kiṃ niddayā nayatha vītabhayā tiyāmaṃ",
  "anya-e1209n0:135": "Dhammaṃ sadā’savanudaṃ caratha’ppamattā;",
  "anya-e1209n0:136": "28.",
  "anya-e1209n0:137": "Bhāvetha bho maraṇamāravivajjanāya",
  "anya-e1209n0:138": "Loke sadā maraṇa saññamimaṃ yatattā,",
  "anya-e1209n0:139": "Evañhi bhāvanaratassa narassa tassa",
  "anya-e1209n0:140": "Taṇhā pahīyati sarīragatā asesā;",
  "anya-e1209n0:141": "29.",
  "anya-e1209n0:142": "Rūpaṃ jarā piyataraṃ malinīkaroti",
  "anya-e1209n0:143": "Sabbaṃ balaṃ harati attani ghorarogo,",
  "anya-e1209n0:144": "Nānūpabhoga parirakkhita mattabhāvaṃ",
  "anya-e1209n0:145": "Bho maccu saṃharati kiṃ phalamattabhāve?",
  "anya-e1209n0:146": "30.",
  "anya-e1209n0:147": "Kammānilāpahatarogataraṃgabhaṃge",
  "anya-e1209n0:148": "Saṃsāra sāgara mukhe vitate vipannā,",
  "anya-e1209n0:149": "Mā māpamādamakarittha karotha mokkhaṃ",
  "anya-e1209n0:150": "Dukkhodayo nanu pamādamayaṃ narānaṃ;",
  "anya-e1209n0:151": "31.",
  "anya-e1209n0:152": "Bhogā ca mittasutaporisa bandhavā ca",
  "anya-e1209n0:153": "Nārī ca jīvitasamā api khettavatthu,",
  "anya-e1209n0:154": "Sabbāni tāni paralokamito vajantaṃ",
  "anya-e1209n0:155": "Nānubbajanti kusalākusalaṃva loke;",
  "anya-e1209n0:156": "32.",
  "anya-e1209n0:157": "Bho vijjucaṃcalatare bhavasāgaramhi",
  "anya-e1209n0:158": "Khittā purā katamahāpavanena tena,",
  "anya-e1209n0:159": "Kāmaṃ vibhijjati khaṇena sarīranāvā",
  "anya-e1209n0:160": "Hatthe karotha paramaṃ guṇahatthasāraṃ;",
  "anya-e1209n0:161": "33.",
  "anya-e1209n0:162": "Niccaṃ vibhijjatiha āmaka bhājanaṃva",
  "anya-e1209n0:163": "Saṃrakkhitopi bahudhā iha attabhāvo,",
  "anya-e1209n0:164": "Dhammaṃ samācaratha saggapatippatiṭṭhaṃ",
  "anya-e1209n0:165": "Dhammo suciṇṇamihameva phalaṃ dadāti;",
  "anya-e1209n0:166": "34.",
  "anya-e1209n0:167": "Rantvā sadā piyatare divi devarajje",
  "anya-e1209n0:168": "Namhā cavanti vibudhā api khīṇapuññā,",
  "anya-e1209n0:169": "Sabbaṃ sukhaṃ divi bhuvīha viyoganiṭṭhaṃ",
  "anya-e1209n0:170": "Ko paññavā bhavasukhesu ratiṃ kareyya?",
  "anya-e1209n0:171": "35.",
  "anya-e1209n0:172": "Buddho sasāvakagaṇo jagadekanātho",
  "anya-e1209n0:173": "Tārāvalīparivutopi ca puṇṇacando,",
  "anya-e1209n0:174": "Indopi devamakuṭaṃkita pādakañjo",
  "anya-e1209n0:175": "Ko pheṇapiṇḍa-na-samo tibhavesu jāto?",
  "anya-e1209n0:176": "36.",
  "anya-e1209n0:177": "Līlāvataṃsamapi yobbana rūpasobhaṃ",
  "anya-e1209n0:178": "Attūpamaṃ piyajanena ca sampayogaṃ,",
  "anya-e1209n0:179": "Disvāpi vijjucapalaṃ kurute pamādaṃ",
  "anya-e1209n0:180": "Bho mohamohitajano bhavarāgaratto;",
  "anya-e1209n0:181": "37.",
  "anya-e1209n0:182": "Putto pitā bhavati mātu patīha putto",
  "anya-e1209n0:183": "Nārī kadāci jananī ca pitā ca putto,",
  "anya-e1209n0:184": "Evaṃ sadā viparivattati jīvaloko",
  "anya-e1209n0:185": "Citte sadāticapale khalu jātiraṅge;",
  "anya-e1209n0:186": "38.",
  "anya-e1209n0:187": "Rantvā pure vividhaphullalatākulehi",
  "anya-e1209n0:188": "Devāpi nandanavane surasundarīhi,",
  "anya-e1209n0:189": "Te ve’kadā vitatakaṇṭakasaṃkaṭesu",
  "anya-e1209n0:190": "Bho koṭisimbalivanesu phusanti dukkhaṃ;",
  "anya-e1209n0:191": "39.",
  "anya-e1209n0:192": "Bhutvā sudhannamapi kañcanabhājanesu",
  "anya-e1209n0:193": "Sagge pure suravarā paramiddhipattā,",
  "anya-e1209n0:194": "Te cāpi pajjalitalohagulaṃ gilanti",
  "anya-e1209n0:195": "Kāmaṃ kadāci narakālaya vāsabhūtā;",
  "anya-e1209n0:196": "40.",
  "anya-e1209n0:197": "Bhutvā narissaravarā ca mahiṃ asesaṃ",
  "anya-e1209n0:198": "Devādhipā ca divi dibbasukhaṃ surammaṃ,",
  "anya-e1209n0:199": "Vāsaṃ kadāci khurasañcitabhūtalesu",
  "anya-e1209n0:200": "Te vā mahārathagaṇānugatā divīha;",
  "anya-e1209n0:201": "41.",
  "anya-e1209n0:202": "Devaṅganā lalitabhinnataraṅgamāle",
  "anya-e1209n0:203": "Raṅge mahissarajaṭāmakuṭānuyāte,",
  "anya-e1209n0:204": "Rantvā pure suravarā pamadāsahāyā",
  "anya-e1209n0:205": "Te cāpi ghorataravetaraṇiṃ patanti;",
  "anya-e1209n0:206": "42.",
  "anya-e1209n0:207": "Phullāni pallavalatāphalasaṃkulāni",
  "anya-e1209n0:208": "Rammāni nandanavanāni manoramāni,",
  "anya-e1209n0:209": "Dibbaccharālalitapuṇṇadarīmukhāni",
  "anya-e1209n0:210": "Kelāsamerusikharāni ca yanti nāsaṃ;",
  "anya-e1209n0:211": "43.",
  "anya-e1209n0:212": "Dolā’nilā’nalataraṃgasamā hi bhogā",
  "anya-e1209n0:213": "Vijjuppabhāticapalāni ca jīvitāni,",
  "anya-e1209n0:214": "Māyāmarīcijalasomasamaṃ sarīraṃ",
  "anya-e1209n0:215": "Ko jīvite ca vibhave ca kareyya rāgaṃ?",
  "anya-e1209n0:216": "44.",
  "anya-e1209n0:217": "Kiṃ dukkhamatthi na bhavesu ca dāruṇesu",
  "anya-e1209n0:218": "Sattopi tassa vividhassa na bhājano ko,",
  "anya-e1209n0:219": "Jāto yathā maraṇarogajarābhibhūto",
  "anya-e1209n0:220": "Ko sajjano bhavaratiṃ pihayeyya’bālo?",
  "anya-e1209n0:221": "45.",
  "anya-e1209n0:222": "Ke vāpi pajjalitalohagulaṃ gilanti",
  "anya-e1209n0:223": "Sakkā kathañcidapi pāṇitalena bhīmaṃ,",
  "anya-e1209n0:224": "Dukkhodayaṃ asucinissavanaṃ anantaṃ",
  "anya-e1209n0:225": "Ko kāmayetha khalu dehamimaṃ abālo?",
  "anya-e1209n0:226": "46.",
  "anya-e1209n0:227": "Loke na maccusamamatthi bhayaṃ narānaṃ",
  "anya-e1209n0:228": "Na vyādhidukkhasamamatthi ca kiṃci dukkhaṃ,",
  "anya-e1209n0:229": "Evaṃ virūpakaraṇaṃ na jarāsamānaṃ",
  "anya-e1209n0:230": "Mohena bho ratimupeti tathāpi dehe;",
  "anya-e1209n0:231": "47.",
  "anya-e1209n0:232": "Nissārato nalakalīkadalīsamānaṃ",
  "anya-e1209n0:233": "Attānameva parihaññati attahetu,",
  "anya-e1209n0:234": "Sampositopi kusahāya ivākataññū",
  "anya-e1209n0:235": "Kāyo na yassa anugacchati kālakerā;",
  "anya-e1209n0:236": "48.",
  "anya-e1209n0:237": "Taṃ pheṇapiṇḍasadisaṃ visasūlakappaṃ",
  "anya-e1209n0:238": "Toyā’nilā’nalamahīuragādhivāsaṃ,",
  "anya-e1209n0:239": "Jiṇṇālayaṃva paridubbalamattabhāvaṃ",
  "anya-e1209n0:240": "Disvā naro kathamupeti ratiṃ sapañño?",
  "anya-e1209n0:241": "49.",
  "anya-e1209n0:242": "Āyukkhayaṃ samupayāti khaṇe khaṇepi",
  "anya-e1209n0:243": "Anveti maccu hananāya jarāsipāṇī,",
  "anya-e1209n0:244": "Kālaṃ tathā na parivattati taṃ atītaṃ",
  "anya-e1209n0:245": "Dukkhaṃ idaṃ nanu bhavesu acintanīyaṃ?",
  "anya-e1209n0:246": "50.",
  "anya-e1209n0:247": "Appāyukassa maraṇaṃ sulabhaṃ bhavesu",
  "anya-e1209n0:248": "Dīghāyukassa ca jarā vyasanaṃ ca’nekaṃ,",
  "anya-e1209n0:249": "Evaṃ bhave ubhayatopi ca dukkhameva",
  "anya-e1209n0:250": "Dhammaṃ samācaratha dukkhavināsanāya;",
  "anya-e1209n0:251": "51.",
  "anya-e1209n0:252": "Dukkhagginā sumahatā paripīḷitesu",
  "anya-e1209n0:253": "Lokattayassa vasato bhavavārakesu,",
  "anya-e1209n0:254": "Sabbattatā sucaritassa pamādakālo",
  "anya-e1209n0:255": "Bho bho na hoti paramaṃ kusalaṃ ciṇātha;",
  "anya-e1209n0:256": "52.",
  "anya-e1209n0:257": "Appaṃ sukhaṃ jalalavaṃ viya bho tiṇagge",
  "anya-e1209n0:258": "Dukkhantu sāgarajalaṃ viya sabbaloke,",
  "anya-e1209n0:259": "Saṃkappanā tadapi hoti sabhāvato hi",
  "anya-e1209n0:260": "Sabbaṃ tilokamapi kevaladukkhameva;",
  "anya-e1209n0:261": "53.",
  "anya-e1209n0:262": "Kāyo na yassa anugacchati kāyahetu",
  "anya-e1209n0:263": "Bālo anekavidhamācaratīha dukkhaṃ,",
  "anya-e1209n0:264": "Kāyo sadā kali malākalilañhi loke",
  "anya-e1209n0:265": "Kāye rato’navarataṃ vyasanaṃ pareti",
  "anya-e1209n0:266": "54.",
  "anya-e1209n0:267": "Mīḷhākaraṃ kalimalākaramāmagandhaṃ",
  "anya-e1209n0:268": "Sūḷāsisallavisapannagarogabhūtaṃ,",
  "anya-e1209n0:269": "Dehaṃ vipassatha jarāmaraṇādhivāsaṃ",
  "anya-e1209n0:270": "Tucchaṃ sadā vigatasāramimaṃ vinindyaṃ;",
  "anya-e1209n0:271": "55.",
  "anya-e1209n0:272": "Dukkhaṃ aniccamasubhaṃ vata attabhāvaṃ",
  "anya-e1209n0:273": "Mā saṃkilesaya na vijjati jātu nicco,",
  "anya-e1209n0:274": "Ambho na vijjati hi appamapīha sāraṃ",
  "anya-e1209n0:275": "Sāraṃ samācaratha dhammamalaṃ pamādaṃ;",
  "anya-e1209n0:276": "56.",
  "anya-e1209n0:277": "Māyāmarīcikadalīnalapheṇapuñja-",
  "anya-e1209n0:278": "Gaṃgātaraṅgajalabubbulasannibhesu,",
  "anya-e1209n0:279": "Khandhesu pañcasu chaḷāyatanesu tesu",
  "anya-e1209n0:280": "Attā na vijjati hi ko na vadeyya’bālo?",
  "anya-e1209n0:281": "57.",
  "anya-e1209n0:282": "Vañjhāsuto sasavisāṇamaye rathe tu,",
  "anya-e1209n0:283": "Dhāveyya ce cirataraṃ sadhuraṃ gahetvā,",
  "anya-e1209n0:284": "Dīpaccimālamiva taṃ khaṇabhaṅgabhūtaṃ",
  "anya-e1209n0:285": "Attāti dubbalatarantu vadeyya dehaṃ;",
  "anya-e1209n0:286": "58.",
  "anya-e1209n0:287": "Bālo yathā salilabubbulabhājanena",
  "anya-e1209n0:288": "Ākaṇṭhato vata pibeyya marīcitoyaṃ,",
  "anya-e1209n0:289": "Attāni sārarahitaṃ kadalīsamānaṃ",
  "anya-e1209n0:290": "Mohā bhaṇeyya khalu dehamimaṃ anattaṃ;",
  "anya-e1209n0:291": "59.",
  "anya-e1209n0:292": "Yo’dumbarassa kusumena marīcitoyaṃ",
  "anya-e1209n0:293": "Vāsaṃ yadicchati sa khedamupeti bālo,",
  "anya-e1209n0:294": "Attānameva parihaññati attahetu",
  "anya-e1209n0:295": "Attā na vijjati kadācidapīha dehe;",
  "anya-e1209n0:296": "60.",
  "anya-e1209n0:297": "Poso yathā hi kadalī suvinibbhujanto",
  "anya-e1209n0:298": "Sāraṃ tadappampi nopalabheyya kāmaṃ,",
  "anya-e1209n0:299": "Khandhesu paṃcasu chaḷāyatanesu tesu",
  "anya-e1209n0:300": "Suññesu kiñcidapi nopalabheyya sāraṃ;",
  "anya-e1209n0:301": "61.",
  "anya-e1209n0:302": "Suttaṃ vinā na paṭabhāvamihatthi kiṃci",
  "anya-e1209n0:303": "Dehaṃ vinā na khalu koci mihatthi satto,",
  "anya-e1209n0:304": "Deho sabhāvarahito khaṇabhaṃgayutto,",
  "anya-e1209n0:305": "Ko attahetu aparo bhuvi vijjatīha?",
  "anya-e1209n0:306": "62.",
  "anya-e1209n0:307": "Disvā marīcisalilañhi sudūrato bho",
  "anya-e1209n0:308": "Bālo migo samupadhāvati toyasaññī,",
  "anya-e1209n0:309": "Evaṃ sabhāvarahite viparītasiddhe",
  "anya-e1209n0:310": "Dehe pareti parikappanayā hi rāgaṃ;",
  "anya-e1209n0:311": "63.",
  "anya-e1209n0:312": "Dehe sabhāvarahite parikappasiddhe",
  "anya-e1209n0:313": "Attā na vijjati hi vijjumivantalikkhe,",
  "anya-e1209n0:314": "Bhāvetha bhāvanaratā vigatappamādā",
  "anya-e1209n0:315": "Sabbāsavappahananāya anattasaññaṃ;",
  "anya-e1209n0:316": "64.",
  "anya-e1209n0:317": "Lālākarīsarudhirassuvasānulittaṃ",
  "anya-e1209n0:318": "Dehaṃ imaṃ kalimalākalilaṃ asāraṃ,",
  "anya-e1209n0:319": "Sattā sadā pariharanti jigucchanīyaṃ",
  "anya-e1209n0:320": "Nānāsucīhi paripuṇṇaghaṭaṃ yatheva;",
  "anya-e1209n0:321": "65.",
  "anya-e1209n0:322": "Ṇahātvā jalañhi sakalaṃ catusāgarassa",
  "anya-e1209n0:323": "Meruppamāṇamapi gandhamanuttarañca,",
  "anya-e1209n0:324": "Pappoti neva manujo hi suciṃ kadāci",
  "anya-e1209n0:325": "Kiṃ bho vipassatha guṇaṃ kimu attabhāve?",
  "anya-e1209n0:326": "66.",
  "anya-e1209n0:327": "Deho sa eva vividhāsucisannidhāno",
  "anya-e1209n0:328": "Deho sa eva vadhabandhanarogabhūto,",
  "anya-e1209n0:329": "Deho sa eva navadhā paribhinnagaṇḍo",
  "anya-e1209n0:330": "Dehaṃ vinā bhayakaraṃ na susānamatthi;",
  "anya-e1209n0:331": "67.",
  "anya-e1209n0:332": "Antogataṃ yadiva muttakarīsabhāgo",
  "anya-e1209n0:333": "Dehā bahiṃ aticareyya vinikkhamitvā,",
  "anya-e1209n0:334": "Mātā pitā vikaruṇā ca vinaṭṭhapemā",
  "anya-e1209n0:335": "Kāmaṃ bhaveyyu kimu bandhusutā ca dārā?",
  "anya-e1209n0:336": "68.",
  "anya-e1209n0:337": "Dehaṃ yathā navamukhaṃ kimisaṅghagehaṃ",
  "anya-e1209n0:338": "Maṃsaṭṭhisedarudhirākalilaṃ vigandhaṃ,",
  "anya-e1209n0:339": "Posenti ye vividhapāpamihācaritvā",
  "anya-e1209n0:340": "Te mohitā maraṇadhammamaho vatevaṃ!",
  "anya-e1209n0:341": "69.",
  "anya-e1209n0:342": "Gaṇḍūpame vividharoga nivāsabhūte",
  "anya-e1209n0:343": "Kāye sadā rudhiramuttakarīsapuṇṇe,",
  "anya-e1209n0:344": "Yo ettha nandati naro sasigālabhakkhe",
  "anya-e1209n0:345": "Kāmañhi socati parattha sa bālabuddhi;",
  "anya-e1209n0:346": "70.",
  "anya-e1209n0:347": "Bho pheṇapiṇḍasadiso viya sārahīno",
  "anya-e1209n0:348": "Mīḷhālayo viya sadā paṭikūlagandho,",
  "anya-e1209n0:349": "Āsīvisālayanibho sabhayo sadukkho",
  "anya-e1209n0:350": "Deho sadā savati loṇaghaṭova bhinno;",
  "anya-e1209n0:351": "71.",
  "anya-e1209n0:352": "Jātaṃ yathā na kamalaṃ bhuvi nindanīyaṃ",
  "anya-e1209n0:353": "Paṅkesu bho asucitoya samākulesu,",
  "anya-e1209n0:354": "Jātaṃ tathā parahitampi ca dehabhūtaṃ",
  "anya-e1209n0:355": "Taṃ nindanīyamiha jātu na hoti loke;",
  "anya-e1209n0:356": "72.",
  "anya-e1209n0:357": "Dvattiṃsabhāgaparipūrataro viseso",
  "anya-e1209n0:358": "Kāyo yathā hi naranāri gaṇassa loke,",
  "anya-e1209n0:359": "Kāyesu kiṃ phalamihatthi ca paṇḍitānaṃ",
  "anya-e1209n0:360": "Kāmaṃ tadeva nanu hoti paropakāraṃ;",
  "anya-e1209n0:361": "73.",
  "anya-e1209n0:362": "Posona paṇḍitatarena tathāpi deho",
  "anya-e1209n0:363": "Sabbattanā cirataraṃ paripālanīyo,",
  "anya-e1209n0:364": "Dhammaṃ careyya suciraṃ khalu jīvamāno",
  "anya-e1209n0:365": "Dhamme have maṇivaro iva kāmado bho",
  "anya-e1209n0:366": "74.",
  "anya-e1209n0:367": "Khīre yathā suparibhāvitamosadhamhi",
  "anya-e1209n0:368": "Snehena osadhabalaṃ paribhāsateva,",
  "anya-e1209n0:369": "Dhammo tathā iha samācarito hi loke",
  "anya-e1209n0:370": "Chāyāva yāti paraloka mito vajantaṃ;",
  "anya-e1209n0:371": "75.",
  "anya-e1209n0:372": "Kāyassa bho viracitassa yathānukūlaṃ",
  "anya-e1209n0:373": "Chāyā vibhāti rucirāmaladappaṇe tu,",
  "anya-e1209n0:374": "Katvā tatheva paramaṃ kusalaṃ parattha",
  "anya-e1209n0:375": "Sambhūsitā iva bhavanti phalena tena;",
  "anya-e1209n0:376": "76.",
  "anya-e1209n0:377": "Dehe tathā vividhadukkha nivāsabhūte",
  "anya-e1209n0:378": "Mohā pamādavasagā sukhasaññamūḷhā,",
  "anya-e1209n0:379": "Tikkhe yathā khuramukhe madhulehamāno",
  "anya-e1209n0:380": "Bāḷhañca dukkhamanugacchati hīnapañño;",
  "anya-e1209n0:381": "77.",
  "anya-e1209n0:382": "Saṃkapparāgavigate niratattabhāve",
  "anya-e1209n0:383": "Dukkhaṃ sadā samadhigacchati appapañño,",
  "anya-e1209n0:384": "Mūḷhassa ceva sukhasaññamihatthiloke",
  "anya-e1209n0:385": "Kiṃpakkameva nanu hoti vicāramāne;",
  "anya-e1209n0:386": "78.",
  "anya-e1209n0:387": "Sabbopabhoga dhanadhaññavisesalābhī",
  "anya-e1209n0:388": "Rūpena bho sa makaraddhajasannibhopi,",
  "anya-e1209n0:389": "Yo yobbanepi maraṇaṃ labhate akāmaṃ",
  "anya-e1209n0:390": "Kāmaṃ paratthaparapāṇaharo naro hi;",
  "anya-e1209n0:391": "79.",
  "anya-e1209n0:392": "So yācako bhavati bhinnakapālahattho",
  "anya-e1209n0:393": "Muṇḍo dhigakkharasatehi ca tajjayanto,",
  "anya-e1209n0:394": "Bhikkhaṃ sadāribhavane sakucelavāso",
  "anya-e1209n0:395": "Dehe paratthi paracittaharo naro yo;",
  "anya-e1209n0:396": "80.",
  "anya-e1209n0:397": "Itthī namuñcati sadā puna itthibhāvā",
  "anya-e1209n0:398": "Nārī sadā bhavati so puriso parattha,",
  "anya-e1209n0:399": "Yo ācareyya paradāramalaṅghanīyaṃ",
  "anya-e1209n0:400": "Ghorañca vindati sadā vyasanañca nekaṃ;",
  "anya-e1209n0:401": "81.",
  "anya-e1209n0:402": "Dīno vigandhavadano ca jaḷo apañño",
  "anya-e1209n0:403": "Mūgo sadā bhavati appiyadassano ca,",
  "anya-e1209n0:404": "Pappoti dukkhamatulañca manussabhūto",
  "anya-e1209n0:405": "Vācaṃ musā bhaṇati yo hi apaññasatto;",
  "anya-e1209n0:406": "82.",
  "anya-e1209n0:407": "Ummattakā vigatalajjaguṇā bhavanti",
  "anya-e1209n0:408": "Dīnā sadā vyasanasokaparāyaṇā ca,",
  "anya-e1209n0:409": "Jātā bhavesu vividhesu virūpadehā",
  "anya-e1209n0:410": "Pītvā halāhalavisaṃva suraṃ vipaññā;",
  "anya-e1209n0:411": "83.",
  "anya-e1209n0:412": "Pāpāni yena iha ācaritāni yāni",
  "anya-e1209n0:413": "Yo vassakoṭinahutāni anappakāni,",
  "anya-e1209n0:414": "Laddhāna ghoramatulaṃ narakesu dukkhaṃ",
  "anya-e1209n0:415": "Pappoti cettha vividhavyasanañca nekaṃ;",
  "anya-e1209n0:416": "84.",
  "anya-e1209n0:417": "Lokattayesu sakalesu samaṃ na kiṃci",
  "anya-e1209n0:418": "Lokassa santikaraṇaṃ ratanattayena,",
  "anya-e1209n0:419": "Taṃtejasā sumahatā jitasabbapāpo",
  "anya-e1209n0:420": "Sohaṃ sadādhigatasabbasukho bhaveyyaṃ;",
  "anya-e1209n0:421": "85.",
  "anya-e1209n0:422": "Lokattayesu sakalesu ca sabbasattā",
  "anya-e1209n0:423": "Mittā ca majjharipubandhujanā ca sabbe,",
  "anya-e1209n0:424": "Te sabbadā vigatarogabhayā visokā",
  "anya-e1209n0:425": "Sabbaṃ sukhaṃ adhigatā muditā bhavantu;",
  "anya-e1209n0:426": "86.",
  "anya-e1209n0:427": "Kāyo karīsabharito viya bhinnakumbho",
  "anya-e1209n0:428": "Kāyo sadā kalimalavyasanādhivāso,",
  "anya-e1209n0:429": "Kāye vihaññati ca sabbasukhanti loko",
  "anya-e1209n0:430": "Kāyo sadā maraṇarogajarādhivāso;",
  "anya-e1209n0:431": "87.",
  "anya-e1209n0:432": "So yobbanoti thaviroti ca bālakoti",
  "anya-e1209n0:433": "Satte na pekkhati vihaññatireva maccu,",
  "anya-e1209n0:434": "Sohaṃ ṭhitopi sayitopi ca pakkamanto",
  "anya-e1209n0:435": "Gacchāmi maccuvadanaṃ niyataṃ tathā hi;",
  "anya-e1209n0:436": "88.",
  "anya-e1209n0:437": "Evaṃ yathā vihitadosamidaṃ sarīraṃ",
  "anya-e1209n0:438": "Niccaṃva taggatamanā hadaye karotha,",
  "anya-e1209n0:439": "Mettaṃ parittamasubhaṃ maraṇassatiñca",
  "anya-e1209n0:440": "Bhāvetha bhāvanaratā satataṃ yatattā;",
  "anya-e1209n0:441": "89.",
  "anya-e1209n0:442": "Dānādi puññakiriyāni sukhudrayāni",
  "anya-e1209n0:443": "Katvā ca tamphalamasesa mihappameyyaṃ,",
  "anya-e1209n0:444": "Deyyaṃ sadā parahitāya sukhāya ceva",
  "anya-e1209n0:445": "Kimbho tadeva nanu hatthagatañhi sāraṃ?",
  "anya-e1209n0:446": "90.",
  "anya-e1209n0:447": "Hetuṃ vinā na bhavatī hi ca kiṃci loke",
  "anya-e1209n0:448": "Saddova pāṇitalaghaṭṭanahetujāto,",
  "anya-e1209n0:449": "Evañca hetuphala bhāvavibhāgabhinno",
  "anya-e1209n0:450": "Loko udeti ca vinassati tiṭṭhatī ca;",
  "anya-e1209n0:451": "91.",
  "anya-e1209n0:452": "Kammassa kāraṇāmayañhi yathā avijjā",
  "anya-e1209n0:453": "Bho kammanā samadhigacchati jātibhedaṃ,",
  "anya-e1209n0:454": "Jātiṃ paṭicca ca jarāmaraṇādidukkhaṃ",
  "anya-e1209n0:455": "Sattā sadā paṭilabhanti anādikāle;",
  "anya-e1209n0:456": "92.",
  "anya-e1209n0:457": "Kammaṃ yathā na bhavatīha ca mohanāsā",
  "anya-e1209n0:458": "Kammakkhayāpi ca na hoti bhavesu jāti,",
  "anya-e1209n0:459": "Jātikkhayā iha jarāmaraṇādidukkhaṃ",
  "anya-e1209n0:460": "Sabbakkhayo bhavati dīpevānilena;",
  "anya-e1209n0:461": "93.",
  "anya-e1209n0:462": "Yo passatīha satataṃ munidhammakāyaṃ",
  "anya-e1209n0:463": "Buddhaṃ sa passati naro iti so avoca,",
  "anya-e1209n0:464": "Buddhañca dhammamamalañca tilokanāthaṃ",
  "anya-e1209n0:465": "Sampassituṃ vicinathā’pi ca dhammataṃ bho;",
  "anya-e1209n0:466": "94.",
  "anya-e1209n0:467": "Sallaṃva bho sunisitaṃ hadaye nimuggaṃ",
  "anya-e1209n0:468": "Dosattayaṃ vividhapāpamalena littaṃ,",
  "anya-e1209n0:469": "Nānāvidhabyasanabhājanamappasannaṃ",
  "anya-e1209n0:470": "Paññāmayena balisena nirākarotha;",
  "anya-e1209n0:471": "95.",
  "anya-e1209n0:472": "Nākampayanti sakalāpi ca lokadhammā",
  "anya-e1209n0:473": "Cittaṃ sadāpagatapāpakilesasallaṃ,",
  "anya-e1209n0:474": "Rūpādayo ca vividhā visayā samaggā",
  "anya-e1209n0:475": "Phuṭṭhaṃva merusikharaṃ mahatānilena;",
  "anya-e1209n0:476": "96.",
  "anya-e1209n0:477": "Saṃsāradukkhamagaṇeyya yathā munindo",
  "anya-e1209n0:478": "Gambhirapāramita sāgaramuttaritvā,",
  "anya-e1209n0:479": "Ñeyyaṃ abodhi nipuṇaṃ hatamohajālo",
  "anya-e1209n0:480": "Tasmā sadā parahitaṃ paramaṃ ciṇātha;",
  "anya-e1209n0:481": "97.",
  "anya-e1209n0:482": "Ohāya so’dhigatamokkhasukhaṃ paresaṃ",
  "anya-e1209n0:483": "Atthāya saṃcari bhavesu mahabbhayesu,",
  "anya-e1209n0:484": "Evaṃ sadā parahitaṃ purato karitvā",
  "anya-e1209n0:485": "Dhammo mayānucarito jagadatthameva;",
  "anya-e1209n0:486": "98.",
  "anya-e1209n0:487": "Laddhāna dullabhatarañca manussayoniṃ",
  "anya-e1209n0:488": "Sabbaṃ papañcarahitaṃ khaṇasampadañca,",
  "anya-e1209n0:489": "Ñatvāna āsavanudekahitañca dhammaṃ",
  "anya-e1209n0:490": "Ko paññavā anavaraṃ na bhajeyya dhammaṃ?",
  "anya-e1209n0:491": "99.",
  "anya-e1209n0:492": "Laddhāna buddhasamayaṃ atidullabhaṃca",
  "anya-e1209n0:493": "Saddhamma maggamasamaṃ sivadaṃ tatheva,",
  "anya-e1209n0:494": "Kalyāṇamittapavare matisampadañca",
  "anya-e1209n0:495": "Ko buddhimā anavaraṃ na bhajeyya dhammaṃ?",
  "anya-e1209n0:496": "100.",
  "anya-e1209n0:497": "Evampi dullabhataraṃ vibhave suladdhā",
  "anya-e1209n0:498": "Maccheradosa viratā ubhayatthakāmā,",
  "anya-e1209n0:499": "Saddhādidhammasahitā satatappamattā",
  "anya-e1209n0:500": "Bho! Bho! Karotha amatādhigamāya puññaṃ;"
}