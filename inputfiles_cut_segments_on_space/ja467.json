{
  "ja467:0.1": "Jātaka ",
  "ja467:0.2": "Dvādasakanipāta ",
  "ja467:0.3": "Cūḷakuṇālavagga ",
  "ja467:0.4": "4. Kāmajātaka ",
  "ja467:1.1": "“Kāmaṁ kāmayamānassa, ",
  "ja467:1.2": "tassa ce taṁ samijjhati; ",
  "ja467:1.3": "Addhā pītimano hoti, ",
  "ja467:1.4": "laddhā macco yadicchati. ",
  "ja467:2.1": "Kāmaṁ kāmayamānassa, ",
  "ja467:2.2": "tassa ce taṁ samijjhati; ",
  "ja467:2.3": "Tato naṁ aparaṁ kāme, ",
  "ja467:2.4": "ghamme taṇhaṁva vindati. ",
  "ja467:3.1": "Gavaṁva siṅgino siṅgaṁ, ",
  "ja467:3.2": "vaḍḍhamānassa vaḍḍhati; ",
  "ja467:3.3": "Evaṁ mandassa posassa, ",
  "ja467:3.4": "bālassa avijānato; ",
  "ja467:3.5": "Bhiyyo taṇhā pipāsā ca, ",
  "ja467:3.6": "vaḍḍhamānassa vaḍḍhati. ",
  "ja467:4.1": "Pathabyā sāliyavakaṁ, ",
  "ja467:4.2": "gavāssaṁ dāsaporisaṁ; ",
  "ja467:4.3": "Datvā ca nālamekassa, ",
  "ja467:4.4": "iti vidvā samaṁ care. ",
  "ja467:5.1": "Rājā pasayha pathaviṁ vijitvā, ",
  "ja467:5.2": "Sasāgarantaṁ mahimāvasanto; ",
  "ja467:5.3": "Oraṁ samuddassa atittarūpo, ",
  "ja467:5.4": "Pāraṁ samuddassapi patthayetha. ",
  "ja467:6.1": "Yāva anussaraṁ kāme, ",
  "ja467:6.2": "Manasā titti nājjhagā; ",
  "ja467:6.3": "Tato nivattā paṭikkamma disvā, ",
  "ja467:6.4": "Te ve sutittā ye paññāya tittā. ",
  "ja467:7.1": "Paññāya tittinaṁ seṭṭhaṁ, ",
  "ja467:7.2": "na so kāmehi tappati; ",
  "ja467:7.3": "Paññāya tittaṁ purisaṁ, ",
  "ja467:7.4": "taṇhā na kurute vasaṁ. ",
  "ja467:8.1": "Apacinetheva kāmānaṁ, ",
  "ja467:8.2": "appicchassa alolupo; ",
  "ja467:8.3": "Samuddamatto puriso, ",
  "ja467:8.4": "na so kāmehi tappati. ",
  "ja467:9.1": "Rathakārova cammassa, ",
  "ja467:9.2": "parikantaṁ upāhanaṁ; ",
  "ja467:9.3": "Yaṁ yaṁ cajati kāmānaṁ, ",
  "ja467:9.4": "taṁ taṁ sampajjate sukhaṁ; ",
  "ja467:9.5": "Sabbañce sukhamiccheyya, ",
  "ja467:9.6": "sabbe kāme pariccaje”. ",
  "ja467:10.1": "“Aṭṭha te bhāsitā gāthā, ",
  "ja467:10.2": "sabbā honti sahassiyo; ",
  "ja467:10.3": "Paṭigaṇha mahābrahme, ",
  "ja467:10.4": "sādhetaṁ tava bhāsitaṁ”. ",
  "ja467:11.1": "“Na me attho sahassehi, ",
  "ja467:11.2": "satehi nahutehi vā; ",
  "ja467:11.3": "Pacchimaṁ bhāsato gāthaṁ, ",
  "ja467:11.4": "kāme me na rato mano”. ",
  "ja467:12.1": "“Bhadrako vatāyaṁ māṇavako, ",
  "ja467:12.2": "Sabbalokavidū muni; ",
  "ja467:12.3": "Yo imaṁ taṇhaṁ dukkhajananiṁ, ",
  "ja467:12.4": "Parijānāti paṇḍito”ti. ",
  "ja467:13.1": "Kāmajātakaṁ catutthaṁ. "
}