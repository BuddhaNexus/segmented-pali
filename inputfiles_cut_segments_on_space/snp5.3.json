{
  "snp5.3:0.1": "Sutta Nipāta 5.3 ",
  "snp5.3:0.2": "Tissametteyyamāṇavapucchā ",
  "snp5.3:1.1": "“Kodha santusito loke, ",
  "snp5.3:1.2": "(iccāyasmā tissametteyyo) ",
  "snp5.3:1.3": "Kassa no santi iñjitā; ",
  "snp5.3:1.4": "Ko ubhantamabhiññāya, ",
  "snp5.3:1.5": "Majjhe mantā na lippati; ",
  "snp5.3:1.6": "Kaṁ brūsi mahāpurisoti, ",
  "snp5.3:1.7": "Ko idha sibbinimaccagā”. ",
  "snp5.3:2.1": "“Kāmesu brahmacariyavā, ",
  "snp5.3:2.2": "(metteyyāti bhagavā) ",
  "snp5.3:2.3": "Vītataṇho sadā sato; ",
  "snp5.3:2.4": "Saṅkhāya nibbuto bhikkhu, ",
  "snp5.3:2.5": "Tassa no santi iñjitā. ",
  "snp5.3:3.1": "So ubhantamabhiññāya, ",
  "snp5.3:3.2": "Majjhe mantā na lippati; ",
  "snp5.3:3.3": "Taṁ brūmi mahāpurisoti, ",
  "snp5.3:3.4": "So idha sibbinimaccagā”ti. ",
  "snp5.3:3.5": "Tissametteyyamāṇavapucchā dutiyā. "
}