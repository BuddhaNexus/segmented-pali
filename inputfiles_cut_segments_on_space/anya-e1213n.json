{
  "anya-e1213n:6": "Saddabindu pakaraṇaṃ",
  "anya-e1213n:7": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1213n:8": "1.",
  "anya-e1213n:9": "Yassañeyyesu dhammesu, nāṇumattampaveditaṃ,",
  "anya-e1213n:10": "Natvāsaddhammasaṅghaṃtaṃ, saddabinduṃsamārabhe;",
  "anya-e1213n:11": "2.",
  "anya-e1213n:12": "Kādiritā navasaṅkhyā, kamenaṭā di yādica,",
  "anya-e1213n:13": "Pādayopañca saṅkhyātā, suññanāmā saraññanā;",
  "anya-e1213n:14": "3.",
  "anya-e1213n:15": "Sarehevasarāpubbe luttāvāvīpareramā,",
  "anya-e1213n:16": "Byañjanācāgamāvāvī dīgharassādisambhavā;",
  "anya-e1213n:17": "4.",
  "anya-e1213n:18": "Kākāsenāgatosisa keniddhimaccadassayi,",
  "anya-e1213n:19": "Arājakhvaggimesīnaṃ sotukammeghayitthiyo;",
  "anya-e1213n:20": "Iti sandhikappo samatto.",
  "anya-e1213n:21": "5.",
  "anya-e1213n:22": "Buddhapumayuvasanta rājabrahmasakhācasā,",
  "anya-e1213n:23": "Yatādidehījantuca satthupitābhibhūvidū;",
  "anya-e1213n:24": "6.",
  "anya-e1213n:25": "Kaññāmmārattithipo, kkharaṇīnadirumātubhū,",
  "anya-e1213n:26": "Napuṃsaketiyantāca, padakammadadhāyuno;",
  "anya-e1213n:27": "7.",
  "anya-e1213n:28": "Gahitāgahaṇenettha suddhosyādyantakāpume,",
  "anya-e1213n:29": "Vimalāhontijāntehi thyaṃpañcantehidādhikā;",
  "anya-e1213n:30": "8.",
  "anya-e1213n:31": "Napuṃsakepayogātu janakāhontityantato,",
  "anya-e1213n:32": "Padhānānugatāsabba nāmasamāsataddhitā;",
  "anya-e1213n:33": "9.",
  "anya-e1213n:34": "Attiliṅgānipātādi tatoluttāvasyādayo,",
  "anya-e1213n:35": "Suttānurūpatosiddhā hontivattāmanādayo;",
  "anya-e1213n:36": "Iti nāmakappo samatto.",
  "anya-e1213n:37": "10.",
  "anya-e1213n:38": "Chakārakesasāmismiṃ samāsohotisambhavā,",
  "anya-e1213n:39": "Taddhītākattukammasa, mpadānokāsasāmisu;",
  "anya-e1213n:40": "11.",
  "anya-e1213n:41": "Sādhattayamhiākhyāto kitakosattasādhane,",
  "anya-e1213n:42": "Sabbatthapaṭhamāvutte avuttedutiyādayo;",
  "anya-e1213n:43": "12.",
  "anya-e1213n:44": "Manasāmuninovutyā vanebuddhenavaṇṇite,",
  "anya-e1213n:45": "Vaṭṭāhitovivaṭṭatthaṃ bhikkhubhāvetibhāvanaṃ;",
  "anya-e1213n:46": "Iti kārakakappo samatto.",
  "anya-e1213n:47": "13.",
  "anya-e1213n:48": "Rāsīdvipadikādvandā liṅgenavacanenaca,",
  "anya-e1213n:49": "Luttātulyādhikaraṇā bahubbīhītukhemarū;",
  "anya-e1213n:50": "14.",
  "anya-e1213n:51": "Tappurisācakhemorā dayācakammadhārayā,",
  "anya-e1213n:52": "Digavocāvyayāhārā etesabbepihāritā;",
  "anya-e1213n:53": "Iti samāsakappo samatto.",
  "anya-e1213n:54": "15.",
  "anya-e1213n:55": "Kaccāditopiekamhā saddatoniyamaṃvinā,",
  "anya-e1213n:56": "Nekatthesatibhonteva sabbetaddhitapaccayā;",
  "anya-e1213n:57": "Iti taddhitakappo samatto.",
  "anya-e1213n:58": "16.",
  "anya-e1213n:59": "Kattarināññathākamme tathābhāvetumerayā,",
  "anya-e1213n:60": "Sabbetepacadhātumhi saṅkhepenamarūmayā;",
  "anya-e1213n:61": "17.",
  "anya-e1213n:62": "Gamīmhātiguṇāphatto sambhavāaññadhātusu,",
  "anya-e1213n:63": "Anantāvapayogāte ādesapaccayādihi;",
  "anya-e1213n:64": "Iti ākhyātakappo samatto.",
  "anya-e1213n:65": "18.",
  "anya-e1213n:66": "Kitādipaccayāsabbe, ekamhāapidhātuto,",
  "anya-e1213n:67": "Siyuṃnurūpatosatta, sādhanesatipāyato;",
  "anya-e1213n:68": "Iti kitakappo samatto.",
  "anya-e1213n:69": "19.",
  "anya-e1213n:70": "Iminākiñcilesena, sakkāñātuṃjināgame,",
  "anya-e1213n:71": "Payogāñāṇināsindhu, rasovekenabindunā;",
  "anya-e1213n:72": "20.",
  "anya-e1213n:73": "Rammaṃsīghappavesāya, puraṃpiṭakasaññitaṃ,",
  "anya-e1213n:74": "Maggojumaggataṃmaggaṃ, saddāraññevisodhito;",
  "anya-e1213n:75": "21.",
  "anya-e1213n:76": "Teneva kiñci jalito jalito padīpo",
  "anya-e1213n:77": "Kaccāyanuttiratano citagabbhakoṇe,",
  "anya-e1213n:78": "Dhammādirājagurunā garumāmakena",
  "anya-e1213n:79": "Dhammena yobbipatinā sagaruttanīto;",
  "anya-e1213n:80": "Iti saddabindu pakaraṇaṃ parisamattaṃ.",
  "anya-e1213n:81": "Yosaññamo guṇadhano nayanaṃ nijaṃva",
  "anya-e1213n:82": "Sikkhāpayī mama mavaṃ sugatāgamādo,",
  "anya-e1213n:83": "Salloka puñja suhado padumādi rāma",
  "anya-e1213n:84": "Nāmo mahā yativarā cariyo samayhaṃ;",
  "anya-e1213n:85": "Saddhādhanena vasatā viditamhi pupphā",
  "anya-e1213n:86": "Rāmedhunā ariyavaṃsa dhajavhayena,",
  "anya-e1213n:87": "Santena ñāṇatilako tyaparākhyakena",
  "anya-e1213n:88": "Bālānametamavidhīyi mayāhitāya;"
}