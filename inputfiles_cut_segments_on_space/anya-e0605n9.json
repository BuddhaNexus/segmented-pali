{
  "anya-e0605n9:0": "Nekkhammajjhāsayadīpanīyamakagāthā",
  "anya-e0605n9:1": "Namo tassa yato mahimato yassa tamo na",
  "anya-e0605n9:2": "49.",
  "anya-e0605n9:3": "Disvā nimittāni madacchidāni,",
  "anya-e0605n9:4": "Thīnaṁ virūpāni ratacchidāni;",
  "anya-e0605n9:5": "Pāpāni kammāni sukhacchidāni,",
  "anya-e0605n9:6": "Laddhāni ñāṇāni bhavacchidāni.",
  "anya-e0605n9:7": "50.",
  "anya-e0605n9:8": "Padittagehā viya bheravaṁ ravaṁ,",
  "anya-e0605n9:9": "Ravaṁ sammuṭṭhāya gato mahesi;",
  "anya-e0605n9:10": "Mahesimolokiyaputtamattano,",
  "anya-e0605n9:11": "Tanosi no pemamahoghamattano.",
  "anya-e0605n9:12": "51.",
  "anya-e0605n9:13": "Ummāraummāragatuddharitvā,",
  "anya-e0605n9:14": "Padaṁ padaṁ yātanarāsabhassa;",
  "anya-e0605n9:15": "Alaṁ alaṁkāratarena gantuṁ,",
  "anya-e0605n9:16": "Matī matīvetimanaṅgabhaṅge.",
  "anya-e0605n9:17": "52.",
  "anya-e0605n9:18": "Ummāraummāragato mahesi,",
  "anya-e0605n9:19": "Anaṅgabhaṅgaṁ samacintayittha;",
  "anya-e0605n9:20": "Kiṁ me jarāmaccumukhe ṭhitassa,",
  "anya-e0605n9:21": "Na me vase kāmavase ṭhitassa.",
  "anya-e0605n9:22": "53.",
  "anya-e0605n9:23": "Kāmena kāmena na sādhyamokkhaṁ,",
  "anya-e0605n9:24": "Mānena mānena mamatthi kiñci;",
  "anya-e0605n9:25": "Māro saseno hi avāraṇīyo,",
  "anya-e0605n9:26": "Yantena ucchuṁ viya maddatī maṁ.",
  "anya-e0605n9:27": "54.",
  "anya-e0605n9:28": "Ādittamuyātapayātamūnaṁ,",
  "anya-e0605n9:29": "Atāṇāleṇāsaraṇe jane te;",
  "anya-e0605n9:30": "Disvāna disvāna sivaṁ mayā te,",
  "anya-e0605n9:31": "Kāmena kāmena kathaṁ vineyya.",
  "anya-e0605n9:32": "55.",
  "anya-e0605n9:33": "Vijjāvijjāya cutañcupetaṁ,",
  "anya-e0605n9:34": "Asārasārūpagatañjanaṁ janaṁ;",
  "anya-e0605n9:35": "Vijjāyavijjāya yuto cutohaṁ,",
  "anya-e0605n9:36": "Pahomi tāretumasaṅgaho gato.",
  "anya-e0605n9:37": "56.",
  "anya-e0605n9:38": "Magganti no diṭṭhigatāpavaggaṁ,",
  "anya-e0605n9:39": "Aggā ti tevāhu janā samaggā;",
  "anya-e0605n9:40": "Naggaṁ aho mohatamassa vaggaṁ,",
  "anya-e0605n9:41": "Vaggaṁ hanissāmi tamaggamaggā.",
  "anya-e0605n9:42": "57.",
  "anya-e0605n9:43": "Paseyhakārena aseyhadukkhaṁ,",
  "anya-e0605n9:44": "Janā janentīha janānameva;",
  "anya-e0605n9:45": "Paseyhakārenā aseyhadukkhaṁ,",
  "anya-e0605n9:46": "Pāpaṁ na jānanti tato nidānaṁ.",
  "anya-e0605n9:47": "58.",
  "anya-e0605n9:48": "Te oghayogāsavasaṁkilesā,",
  "anya-e0605n9:49": "Tameva nāsenti tato samuṭṭhitā;",
  "anya-e0605n9:50": "Ekantikaṁ jāti jarā ca maccu,",
  "anya-e0605n9:51": "Nirantaraṁ taṁ byasanañcanekaṁ.",
  "anya-e0605n9:52": "59.",
  "anya-e0605n9:53": "Cīraṁ kilesānasamujjalantaṁ,",
  "anya-e0605n9:54": "Disvāna sattānusayaṁ sayambhū;",
  "anya-e0605n9:55": "Sādhemi bodhiṁ vinayāmi satte,",
  "anya-e0605n9:56": "Pacchāpi passāmi sutaṁ sutantaṁ.",
  "anya-e0605n9:57": "60.",
  "anya-e0605n9:58": "Taṁ dibbacakkaṁ khuracakkamālaṁ,",
  "anya-e0605n9:59": "Rajjaṁ sasārajjasamajjamajjaṁ;",
  "anya-e0605n9:60": "Te bandhavā bandhanamāgatā pare,",
  "anya-e0605n9:61": "Suto pasūtoyamanaṅgadūto.",
  "anya-e0605n9:62": "61.",
  "anya-e0605n9:63": "Samujjalantaṁ vasatī satīsirī,",
  "anya-e0605n9:64": "Sirīsapāgāramidaṁ mahāvisaṁ;",
  "anya-e0605n9:65": "Daddallamānā yuvatī vatīmā,",
  "anya-e0605n9:66": "Sakaṇṭakāyeva samañjasañjase.",
  "anya-e0605n9:67": "62.",
  "anya-e0605n9:68": "Yassā virājitasirī siriyāpi natthi,",
  "anya-e0605n9:69": "Tassāvalokiya na tittivasānamatthi;",
  "anya-e0605n9:70": "Gacchāmi handa tavanaṅga sirappabhedaṁ,",
  "anya-e0605n9:71": "Mattebhakumbhupari sīhavilāsagāmiṁ.",
  "anya-e0605n9:72": "63.",
  "anya-e0605n9:73": "Bho bho anaṅgasucira pi panuṇṇabāṇa,",
  "anya-e0605n9:74": "Bāṇāni saṁhara panuṇṇamito nirodha;",
  "anya-e0605n9:75": "Rodhena cāpadagato manaso na soca,",
  "anya-e0605n9:76": "Socaṁ tavappanavalokiya yāmi santiṁ.",
  "anya-e0605n9:77": "64.",
  "anya-e0605n9:78": "Ratī ratī kāmaguṇe viveke,",
  "anya-e0605n9:79": "Alaṁ alanteva vicintayanto;",
  "anya-e0605n9:80": "Manaṁ manaṅgālayasampadālayaṁ,",
  "anya-e0605n9:81": "Tahiṁ tahiṁ diṭṭhabālā va pakkami."
}