{
  "pv25:0.1": "Petavatthu ",
  "pv25:0.2": "Ubbarivagga ",
  "pv25:0.3": "13. Ubbaripetavatthu ",
  "pv25:1.1": "Ahu rājā brahmadatto, ",
  "pv25:1.2": "pañcālānaṁ rathesabho; ",
  "pv25:1.3": "Ahorattānamaccayā, ",
  "pv25:1.4": "rājā kālamakrubbatha. ",
  "pv25:2.1": "Tassa āḷāhanaṁ gantvā, ",
  "pv25:2.2": "bhariyā kandati ubbarī; ",
  "pv25:2.3": "Brahmadattaṁ apassantī, ",
  "pv25:2.4": "brahmadattāti kandati. ",
  "pv25:3.1": "Isi ca tattha āgacchi, ",
  "pv25:3.2": "sampannacaraṇo muni; ",
  "pv25:3.3": "So ca tattha apucchittha, ",
  "pv25:3.4": "ye tattha susamāgatā. ",
  "pv25:4.1": "“Kassa idaṁ āḷāhanaṁ, ",
  "pv25:4.2": "nānāgandhasameritaṁ; ",
  "pv25:4.3": "Kassāyaṁ kandati bhariyā, ",
  "pv25:4.4": "ito dūragataṁ patiṁ; ",
  "pv25:4.5": "Brahmadattaṁ apassantī, ",
  "pv25:4.6": "‘brahmadattā’ti kandati”. ",
  "pv25:5.1": "Te ca tattha viyākaṁsu, ",
  "pv25:5.2": "ye tattha susamāgatā; ",
  "pv25:5.3": "“Brahmadattassa bhadante, ",
  "pv25:5.4": "brahmadattassa mārisa. ",
  "pv25:6.1": "Tassa idaṁ āḷāhanaṁ, ",
  "pv25:6.2": "nānāgandhasameritaṁ; ",
  "pv25:6.3": "Tassāyaṁ kandati bhariyā, ",
  "pv25:6.4": "ito dūragataṁ patiṁ; ",
  "pv25:6.5": "Brahmadattaṁ apassantī, ",
  "pv25:6.6": "‘brahmadattā’ti kandati”. ",
  "pv25:7.1": "“Chaḷāsītisahassāni, ",
  "pv25:7.2": "brahmadattassanāmakā; ",
  "pv25:7.3": "Imasmiṁ āḷāhane daḍḍhā, ",
  "pv25:7.4": "tesaṁ kamanusocasī”ti. ",
  "pv25:8.1": "“Yo rājā cūḷanīputto, ",
  "pv25:8.2": "pañcālānaṁ rathesabho; ",
  "pv25:8.3": "Taṁ bhante anusocāmi, ",
  "pv25:8.4": "bhattāraṁ sabbakāmadan”ti. ",
  "pv25:9.1": "“Sabbe vāhesuṁ rājāno, ",
  "pv25:9.2": "brahmadattassanāmakā; ",
  "pv25:9.3": "Sabbeva cūḷanīputtā, ",
  "pv25:9.4": "pañcālānaṁ rathesabhā. ",
  "pv25:10.1": "Sabbesaṁ anupubbena, ",
  "pv25:10.2": "mahesittamakārayi; ",
  "pv25:10.3": "Kasmā purimake hitvā, ",
  "pv25:10.4": "pacchimaṁ anusocasī”ti. ",
  "pv25:11.1": "“Ātume itthibhūtāya, ",
  "pv25:11.2": "dīgharattāya mārisa; ",
  "pv25:11.3": "Yassā me itthibhūtāya, ",
  "pv25:11.4": "saṁsāre bahubhāsasī”ti. ",
  "pv25:12.1": "“Ahu itthī ahu puriso, ",
  "pv25:12.2": "pasuyonimpi āgamā; ",
  "pv25:12.3": "Evametaṁ atītānaṁ, ",
  "pv25:12.4": "pariyanto na dissatī”ti. ",
  "pv25:13.1": "“Ādittaṁ vata maṁ santaṁ, ",
  "pv25:13.2": "ghatasittaṁva pāvakaṁ; ",
  "pv25:13.3": "Vārinā viya osiñcaṁ, ",
  "pv25:13.4": "sabbaṁ nibbāpaye daraṁ. ",
  "pv25:14.1": "Abbahī vata me sallaṁ, ",
  "pv25:14.2": "sokaṁ hadayanissitaṁ; ",
  "pv25:14.3": "Yo me sokaparetāya, ",
  "pv25:14.4": "patisokaṁ apānudi. ",
  "pv25:15.1": "Sāhaṁ abbūḷhasallāsmi, ",
  "pv25:15.2": "sītibhūtāsmi nibbutā; ",
  "pv25:15.3": "Na socāmi na rodāmi, ",
  "pv25:15.4": "tava sutvā mahāmunī”ti. ",
  "pv25:16.1": "Tassa taṁ vacanaṁ sutvā, ",
  "pv25:16.2": "samaṇassa subhāsitaṁ; ",
  "pv25:16.3": "Pattacīvaramādāya, ",
  "pv25:16.4": "pabbaji anagāriyaṁ. ",
  "pv25:17.1": "Sā ca pabbajitā santā, ",
  "pv25:17.2": "agārasmā anagāriyaṁ; ",
  "pv25:17.3": "Mettacittaṁ abhāvesi, ",
  "pv25:17.4": "brahmalokūpapattiyā. ",
  "pv25:18.1": "Gāmā gāmaṁ vicarantī, ",
  "pv25:18.2": "nigame rājadhāniyo; ",
  "pv25:18.3": "Uruvelā nāma so gāmo, ",
  "pv25:18.4": "yattha kālamakrubbatha. ",
  "pv25:19.1": "Mettacittaṁ ābhāvetvā, ",
  "pv25:19.2": "brahmalokūpapattiyā; ",
  "pv25:19.3": "Itthicittaṁ virājetvā, ",
  "pv25:19.4": "brahmalokūpagā ahūti. ",
  "pv25:20.1": "Ubbaripetavatthu terasamaṁ. ",
  "pv25:21.1": "Ubbarivaggo dutiyo. ",
  "pv25:22.1": "Tassuddānaṁ ",
  "pv25:23.1": "Mocakaṁ mātā mattā ca, ",
  "pv25:23.2": "Nandā kuṇḍalīnā ghaṭo; ",
  "pv25:23.3": "Dve seṭṭhī tunnavāyo ca, ",
  "pv25:23.4": "Uttara suttakaṇṇa ubbarīti. "
}