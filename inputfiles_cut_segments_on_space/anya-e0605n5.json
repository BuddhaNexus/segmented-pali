{
  "anya-e0605n5:0": "Bodhisambhāradīpanīgāthā",
  "anya-e0605n5:1": "23.",
  "anya-e0605n5:2": "So dukkhakhinnajanadassanadukkhakhinno,",
  "anya-e0605n5:3": "Kāruññameva janatāya akāsi niccaṁ;",
  "anya-e0605n5:4": "Tesaṁ hi mocanamupāyamidanti ñatvā,",
  "anya-e0605n5:5": "Tādīparādhamapi attani ropayī so.",
  "anya-e0605n5:6": "24.",
  "anya-e0605n5:7": "Dānādinekavarapāramisāgaresu,",
  "anya-e0605n5:8": "Ogāḷhatāyapi paduṭṭhajanena dinnaṁ;",
  "anya-e0605n5:9": "Dukkhaṁ tathā atimahantatarampi kiñci,",
  "anya-e0605n5:10": "Nāññāsi sattahitamevea gavesayanto.",
  "anya-e0605n5:11": "25.",
  "anya-e0605n5:12": "Chetvāna sīsaṁ hi sakaṁ dadanto,",
  "anya-e0605n5:13": "Maṁsaṁ pacitvāna sakaṁ dadanto;",
  "anya-e0605n5:14": "So cattagatto paṇidhānakāle,",
  "anya-e0605n5:15": "Duṭṭhassa kiṁ dussati chedanena.",
  "anya-e0605n5:16": "26.",
  "anya-e0605n5:17": "Evaṁ anantamapi jātisatesu dukkhaṁ,",
  "anya-e0605n5:18": "Patvāna sattahitameva gavesayanto;",
  "anya-e0605n5:19": "Dīpaṅkare gahitasīlasamādhipaññaṁ,",
  "anya-e0605n5:20": "Pālesi yāva sakabodhitale suniṭṭho.",
  "anya-e0605n5:21": "27.",
  "anya-e0605n5:22": "Yadābhinīhāramakā sumedho,",
  "anya-e0605n5:23": "Yadā ca maddiṁ adadā sivindo;",
  "anya-e0605n5:24": "Etthantare jātisu kiñcipekaṁ,",
  "anya-e0605n5:25": "Niratthakaṁ no agamāsi tassa.",
  "anya-e0605n5:26": "28.",
  "anya-e0605n5:27": "Mahāsamudde jalabindutopi,",
  "anya-e0605n5:28": "Tadantre jāti anappakā va;",
  "anya-e0605n5:29": "Nirantaraṁ pūritapāramīnaṁ,",
  "anya-e0605n5:30": "Kathaṁ pamāṇaṁ upamā kuhiṁ vā.",
  "anya-e0605n5:31": "29.",
  "anya-e0605n5:32": "Yo maggapasse madhurambabījaṁ,",
  "anya-e0605n5:33": "Chāyāphalatthāya mahājanānaṁ;",
  "anya-e0605n5:34": "Ropesi tasmiṁ hi khaṇeva tena,",
  "anya-e0605n5:35": "Chāyāphale puññamaladdhamuddhaṁ.",
  "anya-e0605n5:36": "30.",
  "anya-e0605n5:37": "Tatheva saṁsārapathe janānaṁ,",
  "anya-e0605n5:38": "Hitāya attanamabhiropitakkhaṇe;",
  "anya-e0605n5:39": "Siddhaṁ va puññūpari tassa tasmiṁ,",
  "anya-e0605n5:40": "Dhanaṅgajīvaṁ pi haranti ye ye.",
  "anya-e0605n5:41": "31.",
  "anya-e0605n5:42": "So sāgare jaladhikaṁ ruhiraṁ adāsi,",
  "anya-e0605n5:43": "Bhūmāparājiya samaṁsamadāsi dānaṁ;",
  "anya-e0605n5:44": "Meruppamāṇamadhikañca samoḷisīsaṁ,",
  "anya-e0605n5:45": "Khe tārakādhikataraṁ nayanaṁ adāsi."
}