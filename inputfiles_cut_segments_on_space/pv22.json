{
  "pv22:0.1": "Petavatthu ",
  "pv22:0.2": "Ubbarivagga ",
  "pv22:0.3": "10. Uttaramātupetivatthu ",
  "pv22:1.1": "Divāvihāragataṁ bhikkhuṁ, ",
  "pv22:1.2": "gaṅgātīre nisinnakaṁ; ",
  "pv22:1.3": "Taṁ petī upasaṅkamma, ",
  "pv22:1.4": "dubbaṇṇā bhīrudassanā. ",
  "pv22:2.1": "Kesā cassā atidīghā, ",
  "pv22:2.2": "yāvabhūmāvalambare; ",
  "pv22:2.3": "Kesehi sā paṭicchannā, ",
  "pv22:2.4": "samaṇaṁ etadabravi. ",
  "pv22:3.1": "“Pañcapaṇṇāsavassāni, ",
  "pv22:3.2": "yato kālaṅkatā ahaṁ; ",
  "pv22:3.3": "Nābhijānāmi bhuttaṁ vā, ",
  "pv22:3.4": "pītaṁ vā pana pāniyaṁ; ",
  "pv22:3.5": "Dehi tvaṁ pāniyaṁ bhante, ",
  "pv22:3.6": "tasitā pāniyāya me”ti. ",
  "pv22:4.1": "“Ayaṁ sītodikā gaṅgā, ",
  "pv22:4.2": "himavantato sandati; ",
  "pv22:4.3": "Piva etto gahetvāna, ",
  "pv22:4.4": "kiṁ maṁ yācasi pāniyan”ti. ",
  "pv22:5.1": "“Sacāhaṁ bhante gaṅgāya, ",
  "pv22:5.2": "sayaṁ gaṇhāmi pāniyaṁ; ",
  "pv22:5.3": "Lohitaṁ me parivattati, ",
  "pv22:5.4": "tasmā yācāmi pāniyan”ti. ",
  "pv22:6.1": "“Kiṁ nu kāyena vācāya, ",
  "pv22:6.2": "manasā dukkaṭaṁ kataṁ; ",
  "pv22:6.3": "Kissa kammavipākena, ",
  "pv22:6.4": "gaṅgā te hoti lohitan”ti. ",
  "pv22:7.1": "“Putto me uttaro nāma, ",
  "pv22:7.2": "saddho āsi upāsako; ",
  "pv22:7.3": "So ca mayhaṁ akāmāya, ",
  "pv22:7.4": "samaṇānaṁ pavecchati. ",
  "pv22:8.1": "Cīvaraṁ piṇḍapātañca, ",
  "pv22:8.2": "paccayaṁ sayanāsanaṁ; ",
  "pv22:8.3": "Tamahaṁ paribhāsāmi, ",
  "pv22:8.4": "maccherena upaddutā. ",
  "pv22:9.1": "Yaṁ tvaṁ mayhaṁ akāmāya, ",
  "pv22:9.2": "samaṇānaṁ pavecchasi; ",
  "pv22:9.3": "Cīvaraṁ piṇḍapātañca, ",
  "pv22:9.4": "paccayaṁ sayanāsanaṁ. ",
  "pv22:10.1": "Etaṁ te paralokasmiṁ, ",
  "pv22:10.2": "lohitaṁ hotu uttara; ",
  "pv22:10.3": "Tassa kammassa vipākena, ",
  "pv22:10.4": "gaṅgā me hoti lohitan”ti. ",
  "pv22:11.1": "Uttaramātupetivatthu dasamaṁ. "
}