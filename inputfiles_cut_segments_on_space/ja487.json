{
  "ja487:0.1": "Jātaka ",
  "ja487:0.2": "Pakiṇṇakanipāta ",
  "ja487:0.3": "Sālikedāravagga ",
  "ja487:0.4": "4. Uddālakajātaka ",
  "ja487:1.1": "“Kharājinā jaṭilā paṅkadantā, ",
  "ja487:1.2": "Dummakkharūpā ye mantaṁ jappanti; ",
  "ja487:1.3": "Kaccinnu te mānusake payoge, ",
  "ja487:1.4": "Idaṁ vidū parimuttā apāyā”. ",
  "ja487:2.1": "“Pāpāni kammāni karetha rāja, ",
  "ja487:2.2": "Bahussuto ce na careyya dhammaṁ; ",
  "ja487:2.3": "Sahassavedopi na taṁ paṭicca, ",
  "ja487:2.4": "Dukkhā pamucce caraṇaṁ apatvā”. ",
  "ja487:3.1": "“Sahassavedopi na taṁ paṭicca, ",
  "ja487:3.2": "Dukkhā pamucce caraṇaṁ apatvā; ",
  "ja487:3.3": "Maññāmi vedā aphalā bhavanti, ",
  "ja487:3.4": "Sasaṁyamaṁ caraṇaññeva saccaṁ”. ",
  "ja487:4.1": "“Na heva vedā aphalā bhavanti, ",
  "ja487:4.2": "Sasaṁyamaṁ caraṇaññeva saccaṁ; ",
  "ja487:4.3": "Kittiñhi pappoti adhicca vede, ",
  "ja487:4.4": "Santiṁ puṇāti caraṇena danto”. ",
  "ja487:5.1": "“Bhaccā mātā pitā bandhū, ",
  "ja487:5.2": "yena jāto sayeva so; ",
  "ja487:5.3": "Uddālako ahaṁ bhoto, ",
  "ja487:5.4": "sottiyākulavaṁsako”. ",
  "ja487:6.1": "“Kathaṁ bho brāhmaṇo hoti, ",
  "ja487:6.2": "kathaṁ bhavati kevalī; ",
  "ja487:6.3": "Kathañca parinibbānaṁ, ",
  "ja487:6.4": "dhammaṭṭho kinti vuccati”. ",
  "ja487:7.1": "“Niraṅkatvā aggimādāya brāhmaṇo, ",
  "ja487:7.2": "Āpo siñcaṁ yajaṁ usseti yūpaṁ; ",
  "ja487:7.3": "Evaṅkaro brāhmaṇo hoti khemī, ",
  "ja487:7.4": "Dhamme ṭhitaṁ tena amāpayiṁsu”. ",
  "ja487:8.1": "“Na suddhi secanenatthi, ",
  "ja487:8.2": "nāpi kevalī brāhmaṇo; ",
  "ja487:8.3": "Na khantī nāpi soraccaṁ, ",
  "ja487:8.4": "nāpi so parinibbuto”. ",
  "ja487:9.1": "“Kathaṁ so brāhmaṇo hoti, ",
  "ja487:9.2": "kathaṁ bhavati kevalī; ",
  "ja487:9.3": "Kathañca parinibbānaṁ, ",
  "ja487:9.4": "dhammaṭṭho kinti vuccati”. ",
  "ja487:10.1": "“Akhettabandhū amamo nirāso, ",
  "ja487:10.2": "Nillobhapāpo bhavalobhakhīṇo; ",
  "ja487:10.3": "Evaṅkaro brāhmaṇo hoti khemī, ",
  "ja487:10.4": "Dhamme ṭhitaṁ tena amāpayiṁsu”. ",
  "ja487:11.1": "“Khattiyā brāhmaṇā vessā, ",
  "ja487:11.2": "suddā caṇḍālapukkusā; ",
  "ja487:11.3": "Sabbeva soratā dantā, ",
  "ja487:11.4": "sabbeva parinibbutā; ",
  "ja487:11.5": "Sabbesaṁ sītibhūtānaṁ, ",
  "ja487:11.6": "atthi seyyotha pāpiyo”. ",
  "ja487:12.1": "“Khattiyā brāhmaṇā vessā, ",
  "ja487:12.2": "suddā caṇḍālapukkusā; ",
  "ja487:12.3": "Sabbeva soratā dantā, ",
  "ja487:12.4": "sabbeva parinibbutā; ",
  "ja487:12.5": "Sabbesaṁ sītibhūtānaṁ, ",
  "ja487:12.6": "natthi seyyotha pāpiyo”. ",
  "ja487:13.1": "“Khattiyā brāhmaṇā vessā, ",
  "ja487:13.2": "suddā caṇḍālapukkusā; ",
  "ja487:13.3": "Sabbeva soratā dantā, ",
  "ja487:13.4": "sabbeva parinibbutā. ",
  "ja487:14.1": "Sabbesaṁ sītibhūtānaṁ, ",
  "ja487:14.2": "Natthi seyyotha pāpiyo; ",
  "ja487:14.3": "Panatthaṁ carasi brahmaññaṁ, ",
  "ja487:14.4": "Sottiyākulavaṁsataṁ”. ",
  "ja487:15.1": "“Nānārattehi vatthehi, ",
  "ja487:15.2": "vimānaṁ bhavati chāditaṁ; ",
  "ja487:15.3": "Na tesaṁ chāyā vatthānaṁ, ",
  "ja487:15.4": "so rāgo anupajjatha. ",
  "ja487:16.1": "Evameva manussesu, ",
  "ja487:16.2": "yadā sujjhanti māṇavā; ",
  "ja487:16.3": "Te sajātiṁ pamuñcanti, ",
  "ja487:16.4": "dhammamaññāya subbatā”ti. ",
  "ja487:17.1": "Uddālakajātakaṁ catutthaṁ. "
}