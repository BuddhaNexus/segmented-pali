{
  "pv13:0.1": "Petavatthu ",
  "pv13:0.2": "Ubbarivagga ",
  "pv13:0.3": "1. Saṁsāramocakapetivatthu ",
  "pv13:1.1": "“Naggā dubbaṇṇarūpāsi, ",
  "pv13:1.2": "kisā dhamanisanthatā; ",
  "pv13:1.3": "Upphāsulike kisike, ",
  "pv13:1.4": "kā nu tvaṁ idha tiṭṭhasī”ti. ",
  "pv13:2.1": "“Ahaṁ bhadante petīmhi, ",
  "pv13:2.2": "duggatā yamalokikā; ",
  "pv13:2.3": "Pāpakammaṁ karitvāna, ",
  "pv13:2.4": "petalokaṁ ito gatā”ti. ",
  "pv13:3.1": "“Kiṁ nu kāyena vācāya, ",
  "pv13:3.2": "manasā dukkaṭaṁ kataṁ; ",
  "pv13:3.3": "Kissa kammavipākena, ",
  "pv13:3.4": "petalokaṁ ito gatā”ti. ",
  "pv13:4.1": "“Anukampakā mayhaṁ nāhesuṁ bhante, ",
  "pv13:4.2": "Pitā ca mātā athavāpi ñātakā; ",
  "pv13:4.3": "Ye maṁ niyojeyyuṁ dadāhi dānaṁ, ",
  "pv13:4.4": "Pasannacittā samaṇabrāhmaṇānaṁ. ",
  "pv13:5.1": "Ito ahaṁ vassasatāni pañca, ",
  "pv13:5.2": "Yaṁ evarūpā vicarāmi naggā; ",
  "pv13:5.3": "Khudāya taṇhāya ca khajjamānā, ",
  "pv13:5.4": "Pāpassa kammassa phalaṁ mamedaṁ. ",
  "pv13:6.1": "Vandāmi taṁ ayya pasannacittā, ",
  "pv13:6.2": "Anukampa maṁ vīra mahānubhāva; ",
  "pv13:6.3": "Datvā ca me ādisa yaṁ hi kiñci, ",
  "pv13:6.4": "Mocehi maṁ duggatiyā bhadante”ti. ",
  "pv13:7.1": "Sādhūti so paṭissutvā, ",
  "pv13:7.2": "sāriputtonukampako; ",
  "pv13:7.3": "Bhikkhūnaṁ ālopaṁ datvā, ",
  "pv13:7.4": "pāṇimattañca coḷakaṁ; ",
  "pv13:7.5": "Thālakassa ca pānīyaṁ, ",
  "pv13:7.6": "tassā dakkhiṇamādisi. ",
  "pv13:8.1": "Samanantarānuddiṭṭhe, ",
  "pv13:8.2": "vipāko udapajjatha; ",
  "pv13:8.3": "Bhojanacchādanapānīyaṁ, ",
  "pv13:8.4": "dakkhiṇāya idaṁ phalaṁ. ",
  "pv13:9.1": "Tato suddhā sucivasanā, ",
  "pv13:9.2": "kāsikuttamadhārinī; ",
  "pv13:9.3": "Vicittavatthābharaṇā, ",
  "pv13:9.4": "sāriputtaṁ upasaṅkami. ",
  "pv13:10.1": "“Abhikkantena vaṇṇena, ",
  "pv13:10.2": "yā tvaṁ tiṭṭhasi devate; ",
  "pv13:10.3": "Obhāsentī disā sabbā, ",
  "pv13:10.4": "osadhī viya tārakā. ",
  "pv13:11.1": "Kena te tādiso vaṇṇo, ",
  "pv13:11.2": "kena te idha mijjhati; ",
  "pv13:11.3": "Uppajjanti ca te bhogā, ",
  "pv13:11.4": "ye keci manaso piyā. ",
  "pv13:12.1": "Pucchāmi taṁ devi mahānubhāve, ",
  "pv13:12.2": "Manussabhūtā kimakāsi puññaṁ; ",
  "pv13:12.3": "Kenāsi evaṁ jalitānubhāvā, ",
  "pv13:12.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti. ",
  "pv13:13.1": "“Uppaṇḍukiṁ kisaṁ chātaṁ, ",
  "pv13:13.2": "naggaṁ sampatitacchaviṁ; ",
  "pv13:13.3": "Muni kāruṇiko loke, ",
  "pv13:13.4": "taṁ maṁ addakkhi duggataṁ. ",
  "pv13:14.1": "Bhikkhūnaṁ ālopaṁ datvā, ",
  "pv13:14.2": "pāṇimattañca coḷakaṁ; ",
  "pv13:14.3": "Thālakassa ca pānīyaṁ, ",
  "pv13:14.4": "mama dakkhiṇamādisi. ",
  "pv13:15.1": "Ālopassa phalaṁ passa, ",
  "pv13:15.2": "bhattaṁ vassasataṁ dasa; ",
  "pv13:15.3": "Bhuñjāmi kāmakāminī, ",
  "pv13:15.4": "anekarasabyañjanaṁ. ",
  "pv13:16.1": "Pāṇimattassa coḷassa, ",
  "pv13:16.2": "vipākaṁ passa yādisaṁ; ",
  "pv13:16.3": "Yāvatā nandarājassa, ",
  "pv13:16.4": "vijitasmiṁ paṭicchadā. ",
  "pv13:17.1": "Tato bahutarā bhante, ",
  "pv13:17.2": "vatthānacchādanāni me; ",
  "pv13:17.3": "Koseyyakambalīyāni, ",
  "pv13:17.4": "khomakappāsikāni ca. ",
  "pv13:18.1": "Vipulā ca mahagghā ca, ",
  "pv13:18.2": "tepākāsevalambare; ",
  "pv13:18.3": "Sāhaṁ taṁ paridahāmi, ",
  "pv13:18.4": "yaṁ yaṁ hi manaso piyaṁ. ",
  "pv13:19.1": "Thālakassa ca pānīyaṁ, ",
  "pv13:19.2": "vipākaṁ passa yādisaṁ; ",
  "pv13:19.3": "Gambhīrā caturassā ca, ",
  "pv13:19.4": "pokkharañño sunimmitā. ",
  "pv13:20.1": "Setodakā suppatitthā, ",
  "pv13:20.2": "sītā appaṭigandhiyā; ",
  "pv13:20.3": "Padumuppalasañchannā, ",
  "pv13:20.4": "vārikiñjakkhapūritā. ",
  "pv13:21.1": "Sāhaṁ ramāmi kīḷāmi, ",
  "pv13:21.2": "modāmi akutobhayā; ",
  "pv13:21.3": "Muniṁ kāruṇikaṁ loke, ",
  "pv13:21.4": "bhante vanditumāgatā”ti. ",
  "pv13:22.1": "Saṁsāramocakapetivatthu paṭhamaṁ. "
}