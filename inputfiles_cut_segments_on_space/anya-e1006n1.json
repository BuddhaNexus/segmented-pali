{
  "anya-e1006n1:0": "Vasalasutta",
  "anya-e1006n1:1": "1.",
  "anya-e1006n1:2": " Kodhano upanāhīca,",
  "anya-e1006n1:3": "Pāpamakkhī ca yo naro;",
  "anya-e1006n1:4": "Vipannadiṭṭhī māyāvī,",
  "anya-e1006n1:5": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:6": "2.",
  "anya-e1006n1:7": " Ekajaṁ vā dvijaṁ vāpi,",
  "anya-e1006n1:8": "Yodha pāṇaṁ vihiṁsati;",
  "anya-e1006n1:9": "Yassa pāṇe dayā natthi,",
  "anya-e1006n1:10": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:11": "3.",
  "anya-e1006n1:12": " Yo hanti uparundhati,",
  "anya-e1006n1:13": "Gāmāni nigamāni ca;",
  "anya-e1006n1:14": "Niggāhako samaññāto,",
  "anya-e1006n1:15": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:16": "4.",
  "anya-e1006n1:17": " Gāme vā yadi vā raññe,",
  "anya-e1006n1:18": "Yaṁ paresaṁ mamāyitaṁ;",
  "anya-e1006n1:19": "Theyyā adinnaṁ ādeti,",
  "anya-e1006n1:20": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:21": "5.",
  "anya-e1006n1:22": " Yo have iṇamādāya,",
  "anya-e1006n1:23": "Vuccamāno palāyati;",
  "anya-e1006n1:24": "Na hi te iṇamatthīti,",
  "anya-e1006n1:25": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:26": "6.",
  "anya-e1006n1:27": " Yodha kiñcikkhakamyatā,",
  "anya-e1006n1:28": "Pathasmiṁ vajataṁ janaṁ;",
  "anya-e1006n1:29": "Hantvā kiñcikkha mādeti;",
  "anya-e1006n1:30": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:31": "7.",
  "anya-e1006n1:32": " Yo attahetu parahetu,",
  "anya-e1006n1:33": "Dhanahetu ca yo naro;",
  "anya-e1006n1:34": "Sakkhipuṭṭho musābrūti,",
  "anya-e1006n1:35": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:36": "8.",
  "anya-e1006n1:37": " Yo ñātīnaṁ sakhīnaṁ vā,",
  "anya-e1006n1:38": "Dāresu paṭidissati;",
  "anya-e1006n1:39": "Sahasā sampiyena vā,",
  "anya-e1006n1:40": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:41": "9.",
  "anya-e1006n1:42": " Yo 4 mātaraṁ pitaraṁ vā,",
  "anya-e1006n1:43": "Jiṇṇakaṁ gatayobbanaṁ;",
  "anya-e1006n1:44": "Pahusanto na bharati,",
  "anya-e1006n1:45": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:46": "10.",
  "anya-e1006n1:47": " Yo mātaraṁ pitaraṁ vā,",
  "anya-e1006n1:48": "Bhātaraṁ bhaginiṁ sassuṁ;",
  "anya-e1006n1:49": "Hanti roseti vācāya,",
  "anya-e1006n1:50": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:51": "11.",
  "anya-e1006n1:52": " Yo atthaṁ pucchito santo,",
  "anya-e1006n1:53": "Anattha manusāsati;",
  "anya-e1006n1:54": "Paṭicchannena manteti,",
  "anya-e1006n1:55": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:56": "12.",
  "anya-e1006n1:57": " Yo katvā pāpakaṁ kammaṁ,",
  "anya-e1006n1:58": "Māmaṁ jaññāti icchati;",
  "anya-e1006n1:59": "Yo paṭicchannakammanto,",
  "anya-e1006n1:60": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:61": "13.",
  "anya-e1006n1:62": " Yo ve parakulaṁ gantvā,",
  "anya-e1006n1:63": "Bhutvāna sucibhojanaṁ;",
  "anya-e1006n1:64": "Āgataṁ nappaṭipūjeti,",
  "anya-e1006n1:65": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:66": "14.",
  "anya-e1006n1:67": " Yo samaṇaṁ vā brāhmaṇaṁ,",
  "anya-e1006n1:68": "Aññaṁ vāpi vaṇibbakaṁ;",
  "anya-e1006n1:69": "Musāvādena vañceti,",
  "anya-e1006n1:70": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:71": "15.",
  "anya-e1006n1:72": " Yo samaṇaṁ vā brāhmaṇaṁ,",
  "anya-e1006n1:73": "Bhattakāle upaṭṭhitaṁ;",
  "anya-e1006n1:74": "Roseti vā na ca deti,",
  "anya-e1006n1:75": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:76": "16.",
  "anya-e1006n1:77": " Asantaṁ yodha pabrūti,",
  "anya-e1006n1:78": "Mohena paliguṇṭhito;",
  "anya-e1006n1:79": "Kiñcanaṁ nijigīsāno,",
  "anya-e1006n1:80": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:81": "17.",
  "anya-e1006n1:82": " Yocattānaṁ samukkaṁse,",
  "anya-e1006n1:83": "Pareca mavajānāti;",
  "anya-e1006n1:84": "Nihīno sena mānena,",
  "anya-e1006n1:85": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:86": "18.",
  "anya-e1006n1:87": " Rosako kadarīyo ca,",
  "anya-e1006n1:88": "Pāpiccho maccharī saṭho;",
  "anya-e1006n1:89": "Ahirīko anottappī,",
  "anya-e1006n1:90": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:91": "19.",
  "anya-e1006n1:92": " Yo buddhaṁ paribhāsati,",
  "anya-e1006n1:93": "Athavā tassa sāvakaṁ;",
  "anya-e1006n1:94": "Paribbajaṁ gahaṭṭhaṁ vā,",
  "anya-e1006n1:95": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:96_0": "Aṭṭhahi bhikkhave aṅgehi sampannāgatassa upāsakassa patto nikujjitabbo. Bhikkhūnaṁ",
  "anya-e1006n1:96_1": "alābhāya parisakkati, bhikkhūnaṁ anatthāya parisakkati, bhikkhūnaṁ anāvāsāya parisakkati,",
  "anya-e1006n1:96_2": "bhikkhūnaṁ akkosati paribhāsati, bhikkhūbhikkhūhi bhedeti, buddhassa avaṇṇaṁ bhāsati,",
  "anya-e1006n1:96_3": "dhammassa avaṇṇaṁ bhāsati, saṅghassa avaṇṇaṁ bhāsati, anujānāmi bhikkhave imehi aṭṭhahi",
  "anya-e1006n1:96_4": "aṅgehi sampannāgatassa upāsakassa pattaṁ nikujjituṁ.",
  "anya-e1006n1:97": "20.",
  "anya-e1006n1:98": " Yo anarahaṁ santo,",
  "anya-e1006n1:99": "Arahāti paṭijānāti;",
  "anya-e1006n1:100": "Coro sabrahmake loke,",
  "anya-e1006n1:101": "Taṁ jaññā vasalo iti.",
  "anya-e1006n1:102": "21.",
  "anya-e1006n1:103": " Ete kho vasalā vuttā,",
  "anya-e1006n1:104": "Mayā ye te pakāsitā;",
  "anya-e1006n1:105": "Na jaccā vasalo hoti,",
  "anya-e1006n1:106": "Na jaccā hoti brāhmaṇo.",
  "anya-e1006n1:107": "22.",
  "anya-e1006n1:108": " Kammunā vasalo hoti,",
  "anya-e1006n1:109": "Kammunā hoti brāhmaṇo.",
  "anya-e1006n1:110": "23.",
  "anya-e1006n1:111": " Tadamināpi jānātha,",
  "anya-e1006n1:112": "Yathāhetaṁ nidassanaṁ;",
  "anya-e1006n1:113": "Caṇḍālaputto sopāko,",
  "anya-e1006n1:114": "Mātaṅgo iti vissuto.",
  "anya-e1006n1:115": "24.",
  "anya-e1006n1:116": " So yasaṁ paramaṁ patto,",
  "anya-e1006n1:117": "Mātaṅgo yaṁ sudullabhaṁ;",
  "anya-e1006n1:118": "Āgacchuṁ tassupaṭṭhānaṁ,",
  "anya-e1006n1:119": "Khattiyā brāhmaṇā bahū.",
  "anya-e1006n1:120": "25.",
  "anya-e1006n1:121": " So devayānaṁ abhiruyha,",
  "anya-e1006n1:122": "Virajaṁ so mahāpathaṁ;",
  "anya-e1006n1:123": "Kāmarāgaṁ virājetvā,",
  "anya-e1006n1:124": "Brahmalokūpago ahu.",
  "anya-e1006n1:125": "Giriṁ nakhena khaṇasi,",
  "anya-e1006n1:126": "Ayo dantebhi khādasi;",
  "anya-e1006n1:127": "Jātavedaṁ padahasi,",
  "anya-e1006n1:128": "Yo isiṁ paribhāsati.",
  "anya-e1006n1:129": "Āvelitaṁ piṭṭhito uttamaṅgaṁ,",
  "anya-e1006n1:130": "Bāhuṁ pasāreti akampaṇeyyaṁ;",
  "anya-e1006n1:131": "Setāni akkhīni yathā matassa,",
  "anya-e1006n1:132": "Ko me imaṁ puttamakāsi evaṁ."
}