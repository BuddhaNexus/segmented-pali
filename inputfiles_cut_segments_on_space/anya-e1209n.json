{
  "anya-e1209n:0": "Telakaṭāhagāthā",
  "anya-e1209n:1": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1209n:2": "1.",
  "anya-e1209n:3": "Laṁkissaro jayatu vāraṇarājagāmī",
  "anya-e1209n:4": "Bhogindabhoga rucirāyata pīṇa bāhu,",
  "anya-e1209n:5": "Sādhupacāranirato guṇasannivāso",
  "anya-e1209n:6": "Dhamme ṭhito vīgatakodhamadāvalepo;",
  "anya-e1209n:7": "2.",
  "anya-e1209n:8": "Yo sabbalokamahito karuṇādhivāso",
  "anya-e1209n:9": "Mokkhākaro ravikulambara puṇṇa cando,",
  "anya-e1209n:10": "Ñeyyodadhiṁ suvipulaṁ sakalaṁ vibuddho",
  "anya-e1209n:11": "Lokuttamaṁ namatha taṁ sirasā munindaṁ;",
  "anya-e1209n:12": "3.",
  "anya-e1209n:13": "Sopānamālamamalaṁ tidasālayassa",
  "anya-e1209n:14": "Saṁsāra sāgarasamuttaraṇāya setuṁ,",
  "anya-e1209n:15": "Sabbāgatībhaya vivajjita khema maggaṁ",
  "anya-e1209n:16": "Dhammaṁ namassatha sadā muninā paṇītaṁ;",
  "anya-e1209n:17": "4.",
  "anya-e1209n:18": "Deyyaṁ tadappamapi yattha pasanna cittā",
  "anya-e1209n:19": "Datvā narā phalamuḷārataraṁ labhante,",
  "anya-e1209n:20": "Taṁ sabbadā dasabalenapi suppasatthaṁ",
  "anya-e1209n:21": "Saṅghaṁ namassatha sadāmitapuññakhettaṁ;",
  "anya-e1209n:22": "5.",
  "anya-e1209n:23": "Tejo balena mahatā ratanattayassa",
  "anya-e1209n:24": "Lokattayaṁ samadhigacchati yena mokkhaṁ,",
  "anya-e1209n:25": "Rakkhā na catthi ca samā ratanattayassa",
  "anya-e1209n:26": "Tasmā sadā bhajatha taṁ ratanattayaṁ bho;",
  "anya-e1209n:27": "6.",
  "anya-e1209n:28": "Laṁkissaro parahitekarato nirāso",
  "anya-e1209n:29": "Rattimpi jāgararato karuṇādhivāso,",
  "anya-e1209n:30": "Lokaṁ vibodhayati lokahitāya kāmaṁ",
  "anya-e1209n:31": "Dhammaṁ samācaratha jāgariyānuyuttā;",
  "anya-e1209n:32": "7.",
  "anya-e1209n:33": "Sattopakāra niratā kusale sahāyā",
  "anya-e1209n:34": "Bho dullabhā bhuvi narā vihatappamādā,",
  "anya-e1209n:35": "Laṁkādhipaṁ guṇadhanaṁ kusale sahāyaṁ",
  "anya-e1209n:36": "Āgamma saṁcaratha dhammamalaṁ pamādaṁ;",
  "anya-e1209n:37": "8.",
  "anya-e1209n:38": "Dhammo tiloka saraṇo paramo rasānaṁ",
  "anya-e1209n:39": "Dhammo mahaggharatano ratanesu loke,",
  "anya-e1209n:40": "Dhammo bhave tibhavadukkha vināsahetu",
  "anya-e1209n:41": "Dhammaṁ samācaratha jāgariyānuyuttā;",
  "anya-e1209n:42": "9.",
  "anya-e1209n:43": "Niddaṁ vinodayatha bhāvayathappameyyaṁ",
  "anya-e1209n:44": "Dukkhaṁ aniccampi ceha anattatañca,",
  "anya-e1209n:45": "Dehe ratiṁ jahatha ja jajjarabhājanābho",
  "anya-e1209n:46": "Dhammaṁ samācaratha jāgariyānuyuttā;",
  "anya-e1209n:47": "10.",
  "anya-e1209n:48": "Okāsa majja mama natthi suve karissaṁ",
  "anya-e1209n:49": "Dhammaṁ itīhalasatā kusalappayoge,",
  "anya-e1209n:50": "Nā’laṁ tiyaddhasu tathā bhuvanattaye ca",
  "anya-e1209n:51": "Kāmaṁ na catthi manujo maraṇā pamutto;",
  "anya-e1209n:52": "11.",
  "anya-e1209n:53": "Khitto yathā nabhasi kenacideva leḍḍu",
  "anya-e1209n:54": "Bhūmiṁ samāpatti bhāratayā khaṇena,",
  "anya-e1209n:55": "Jātattameva khalu kāraṇamekamatra",
  "anya-e1209n:56": "Lokaṁ sadā nanu dhuvaṁ maraṇāya gantuṁ;",
  "anya-e1209n:57": "12.",
  "anya-e1209n:58": "Kāmaṁ narassa patato girimuddhanāto",
  "anya-e1209n:59": "Majjhe na kiñci bhayanissaraṇāya hetu,",
  "anya-e1209n:60": "Kāmaṁ vajanti maraṇaṁ tibhavesu sattā",
  "anya-e1209n:61": "Bhoge ratiṁ pajahathāpi ca jīvite ca;",
  "anya-e1209n:62": "13.",
  "anya-e1209n:63": "Kāmaṁ patanti mahiyā khalu vassadhārā",
  "anya-e1209n:64": "Vijjullatā vitatamegha mukhā pamuttā,",
  "anya-e1209n:65": "Evaṁ narā maraṇabhīma papātamajjhe",
  "anya-e1209n:66": "Kāmaṁ patanti nahi koci bhavesu nicco;",
  "anya-e1209n:67": "14.",
  "anya-e1209n:68": "Velātaṭe paṭutaroru taraṁgamālā",
  "anya-e1209n:69": "Nāsaṁ vajanti satataṁ salilālayassa,",
  "anya-e1209n:70": "Nāsaṁ tathā samupayanti narāmarānaṁ",
  "anya-e1209n:71": "Pāṇāni dāruṇatare maraṇodadhimhi;",
  "anya-e1209n:72": "15.",
  "anya-e1209n:73": "Ruddhopi so rathavarassagajādhipehi",
  "anya-e1209n:74": "Yodhehi cāpi sabalehi ca sāyudhehi,",
  "anya-e1209n:75": "Lokaṁ vivaṁciya sadā maraṇūsabho so",
  "anya-e1209n:76": "Kāmaṁ nihanti bhuvanattaya sāli daṇḍaṁ;",
  "anya-e1209n:77": "16.",
  "anya-e1209n:78": "Bho mārutena mahatā vihato padīpo",
  "anya-e1209n:79": "Khippaṁ vināsa mukhameti mahappabhopi,",
  "anya-e1209n:80": "Loke tathā maraṇacaṇḍa samīraṇena",
  "anya-e1209n:81": "Khippaṁ vinassati narāyumahā padīpo;",
  "anya-e1209n:82": "17",
  "anya-e1209n:83": "Rāmajjunappabhūti bhūpati puṁgavā ca",
  "anya-e1209n:84": "Sūrā pure raṇamukhe vijitāri saṅghā,",
  "anya-e1209n:85": "Tepīha caṇḍa maraṇogha nimuggadehā",
  "anya-e1209n:86": "Nāsaṁ gatā jagati ke maraṇā pamuttā?",
  "anya-e1209n:87": "18.",
  "anya-e1209n:88": "Lakkhī ca sāgarapaṭā sadharādharā ca",
  "anya-e1209n:89": "Sampattiyo ca vividhā api rūpasobhā,",
  "anya-e1209n:90": "Sabbā ca tā api ca mittasutā ca dārā",
  "anya-e1209n:91": "Ke cāpi kaṁ anugatā maraṇaṁ vajantaṁ?",
  "anya-e1209n:92": "19.",
  "anya-e1209n:93": "Brahmāsurāsuragaṇā ca mahānubhāvā",
  "anya-e1209n:94": "Gandhabbakinnaramahoragarakkhasā ca,",
  "anya-e1209n:95": "Te cā pare ca maraṇaggisikhāya sabbe",
  "anya-e1209n:96": "Ante patanti salabhā iva khīṇapuññā;",
  "anya-e1209n:97": "20.",
  "anya-e1209n:98": "Ye sāriputtapamukhā munisāvakā ca",
  "anya-e1209n:99": "Suddhā sadāsavanudā paramiddhipattā,",
  "anya-e1209n:100": "Te cāpi maccuvaḷabhā mukha sannimuggā",
  "anya-e1209n:101": "Dīpānivānalahatā khayataṁ upetā;",
  "anya-e1209n:102": "21.",
  "anya-e1209n:103": "Buddhāpi buddhakamalāmalacārunettā",
  "anya-e1209n:104": "Battiṁsalakkhaṇa virājita rūpasobhā,",
  "anya-e1209n:105": "Sabbāsacakkhayakarāpi ca lokanāthā",
  "anya-e1209n:106": "Sammadditā maraṇamattamahāgajena;",
  "anya-e1209n:107": "22.",
  "anya-e1209n:108": "Rogāturesu karuṇā na jarāturesu",
  "anya-e1209n:109": "Khiḍḍāparesu sukumārakumārakesu,",
  "anya-e1209n:110": "Lokaṁ sadā hanati maccu mahāgajindo",
  "anya-e1209n:111": "Davānalo vanamivāvarataṁ asesaṁ;",
  "anya-e1209n:112": "23.",
  "anya-e1209n:113": "Āpuṇṇatā na salile na jalāsayassa",
  "anya-e1209n:114": "Kaṭṭhassa cāpi bahutā na hutāsanassa,",
  "anya-e1209n:115": "Bhutvāna so tibhūvanampi tathā asesaṁ",
  "anya-e1209n:116": "Bho niddayo na khalu pītimupeti maccu;",
  "anya-e1209n:117": "24.",
  "anya-e1209n:118": "Bho moha mohitatayā vivaso adhañño",
  "anya-e1209n:119": "Loko patatyapipi maccumukhe subhīme,",
  "anya-e1209n:120": "Bhoge ratiṁ samupayāti nihīnapañño",
  "anya-e1209n:121": "Dolā taraṅgacapale supinopameyye;",
  "anya-e1209n:122": "25.",
  "anya-e1209n:123": "Ekopi maccurabhihantumalaṁ tilokaṁ",
  "anya-e1209n:124": "Kiṁ niddayā api jarāmaraṇānuyāyī,",
  "anya-e1209n:125": "Ko vā kareyya vibhasuvesu ca jīvitāsaṁ",
  "anya-e1209n:126": "Jāto naro supina saṁgama sannibhesu;",
  "anya-e1209n:127": "26.",
  "anya-e1209n:128": "Niccāturaṁ jagadidaṁ sabhayaṁ sasokaṁ",
  "anya-e1209n:129": "Disvā ca kodhamadamohajarābhibhūtaṁ,",
  "anya-e1209n:130": "Ubbegamattamapi yassa na vijjatī ce",
  "anya-e1209n:131": "So dāruṇona maraṇaṁ vata taṁ dhiratthu!",
  "anya-e1209n:132": "Bho bho na passatha jarāsidharañhi maccu",
  "anya-e1209n:133": "Māhaññamānamakhilaṁ satataṁ tilokaṁ,",
  "anya-e1209n:134": "Kiṁ niddayā nayatha vītabhayā tiyāmaṁ",
  "anya-e1209n:135": "Dhammaṁ sadā’savanudaṁ caratha’ppamattā;",
  "anya-e1209n:136": "28.",
  "anya-e1209n:137": "Bhāvetha bho maraṇamāravivajjanāya",
  "anya-e1209n:138": "Loke sadā maraṇa saññamimaṁ yatattā,",
  "anya-e1209n:139": "Evañhi bhāvanaratassa narassa tassa",
  "anya-e1209n:140": "Taṇhā pahīyati sarīragatā asesā;",
  "anya-e1209n:141": "29.",
  "anya-e1209n:142": "Rūpaṁ jarā piyataraṁ malinīkaroti",
  "anya-e1209n:143": "Sabbaṁ balaṁ harati attani ghorarogo,",
  "anya-e1209n:144": "Nānūpabhoga parirakkhita mattabhāvaṁ",
  "anya-e1209n:145": "Bho maccu saṁharati kiṁ phalamattabhāve?",
  "anya-e1209n:146": "30.",
  "anya-e1209n:147": "Kammānilāpahatarogataraṁgabhaṁge",
  "anya-e1209n:148": "Saṁsāra sāgara mukhe vitate vipannā,",
  "anya-e1209n:149": "Mā māpamādamakarittha karotha mokkhaṁ",
  "anya-e1209n:150": "Dukkhodayo nanu pamādamayaṁ narānaṁ;",
  "anya-e1209n:151": "31.",
  "anya-e1209n:152": "Bhogā ca mittasutaporisa bandhavā ca",
  "anya-e1209n:153": "Nārī ca jīvitasamā api khettavatthu,",
  "anya-e1209n:154": "Sabbāni tāni paralokamito vajantaṁ",
  "anya-e1209n:155": "Nānubbajanti kusalākusalaṁva loke;",
  "anya-e1209n:156": "32.",
  "anya-e1209n:157": "Bho vijjucaṁcalatare bhavasāgaramhi",
  "anya-e1209n:158": "Khittā purā katamahāpavanena tena,",
  "anya-e1209n:159": "Kāmaṁ vibhijjati khaṇena sarīranāvā",
  "anya-e1209n:160": "Hatthe karotha paramaṁ guṇahatthasāraṁ;",
  "anya-e1209n:161": "33.",
  "anya-e1209n:162": "Niccaṁ vibhijjatiha āmaka bhājanaṁva",
  "anya-e1209n:163": "Saṁrakkhitopi bahudhā iha attabhāvo,",
  "anya-e1209n:164": "Dhammaṁ samācaratha saggapatippatiṭṭhaṁ",
  "anya-e1209n:165": "Dhammo suciṇṇamihameva phalaṁ dadāti;",
  "anya-e1209n:166": "34.",
  "anya-e1209n:167": "Rantvā sadā piyatare divi devarajje",
  "anya-e1209n:168": "Namhā cavanti vibudhā api khīṇapuññā,",
  "anya-e1209n:169": "Sabbaṁ sukhaṁ divi bhuvīha viyoganiṭṭhaṁ",
  "anya-e1209n:170": "Ko paññavā bhavasukhesu ratiṁ kareyya?",
  "anya-e1209n:171": "35.",
  "anya-e1209n:172": "Buddho sasāvakagaṇo jagadekanātho",
  "anya-e1209n:173": "Tārāvalīparivutopi ca puṇṇacando,",
  "anya-e1209n:174": "Indopi devamakuṭaṁkita pādakañjo",
  "anya-e1209n:175": "Ko pheṇapiṇḍa-na-samo tibhavesu jāto?",
  "anya-e1209n:176": "36.",
  "anya-e1209n:177": "Līlāvataṁsamapi yobbana rūpasobhaṁ",
  "anya-e1209n:178": "Attūpamaṁ piyajanena ca sampayogaṁ,",
  "anya-e1209n:179": "Disvāpi vijjucapalaṁ kurute pamādaṁ",
  "anya-e1209n:180": "Bho mohamohitajano bhavarāgaratto;",
  "anya-e1209n:181": "37.",
  "anya-e1209n:182": "Putto pitā bhavati mātu patīha putto",
  "anya-e1209n:183": "Nārī kadāci jananī ca pitā ca putto,",
  "anya-e1209n:184": "Evaṁ sadā viparivattati jīvaloko",
  "anya-e1209n:185": "Citte sadāticapale khalu jātiraṅge;",
  "anya-e1209n:186": "38.",
  "anya-e1209n:187": "Rantvā pure vividhaphullalatākulehi",
  "anya-e1209n:188": "Devāpi nandanavane surasundarīhi,",
  "anya-e1209n:189": "Te ve’kadā vitatakaṇṭakasaṁkaṭesu",
  "anya-e1209n:190": "Bho koṭisimbalivanesu phusanti dukkhaṁ;",
  "anya-e1209n:191": "39.",
  "anya-e1209n:192": "Bhutvā sudhannamapi kañcanabhājanesu",
  "anya-e1209n:193": "Sagge pure suravarā paramiddhipattā,",
  "anya-e1209n:194": "Te cāpi pajjalitalohagulaṁ gilanti",
  "anya-e1209n:195": "Kāmaṁ kadāci narakālaya vāsabhūtā;",
  "anya-e1209n:196": "40.",
  "anya-e1209n:197": "Bhutvā narissaravarā ca mahiṁ asesaṁ",
  "anya-e1209n:198": "Devādhipā ca divi dibbasukhaṁ surammaṁ,",
  "anya-e1209n:199": "Vāsaṁ kadāci khurasañcitabhūtalesu",
  "anya-e1209n:200": "Te vā mahārathagaṇānugatā divīha;",
  "anya-e1209n:201": "41.",
  "anya-e1209n:202": "Devaṅganā lalitabhinnataraṅgamāle",
  "anya-e1209n:203": "Raṅge mahissarajaṭāmakuṭānuyāte,",
  "anya-e1209n:204": "Rantvā pure suravarā pamadāsahāyā",
  "anya-e1209n:205": "Te cāpi ghorataravetaraṇiṁ patanti;",
  "anya-e1209n:206": "42.",
  "anya-e1209n:207": "Phullāni pallavalatāphalasaṁkulāni",
  "anya-e1209n:208": "Rammāni nandanavanāni manoramāni,",
  "anya-e1209n:209": "Dibbaccharālalitapuṇṇadarīmukhāni",
  "anya-e1209n:210": "Kelāsamerusikharāni ca yanti nāsaṁ;",
  "anya-e1209n:211": "43.",
  "anya-e1209n:212": "Dolā’nilā’nalataraṁgasamā hi bhogā",
  "anya-e1209n:213": "Vijjuppabhāticapalāni ca jīvitāni,",
  "anya-e1209n:214": "Māyāmarīcijalasomasamaṁ sarīraṁ",
  "anya-e1209n:215": "Ko jīvite ca vibhave ca kareyya rāgaṁ?",
  "anya-e1209n:216": "44.",
  "anya-e1209n:217": "Kiṁ dukkhamatthi na bhavesu ca dāruṇesu",
  "anya-e1209n:218": "Sattopi tassa vividhassa na bhājano ko,",
  "anya-e1209n:219": "Jāto yathā maraṇarogajarābhibhūto",
  "anya-e1209n:220": "Ko sajjano bhavaratiṁ pihayeyya’bālo?",
  "anya-e1209n:221": "45.",
  "anya-e1209n:222": "Ke vāpi pajjalitalohagulaṁ gilanti",
  "anya-e1209n:223": "Sakkā kathañcidapi pāṇitalena bhīmaṁ,",
  "anya-e1209n:224": "Dukkhodayaṁ asucinissavanaṁ anantaṁ",
  "anya-e1209n:225": "Ko kāmayetha khalu dehamimaṁ abālo?",
  "anya-e1209n:226": "46.",
  "anya-e1209n:227": "Loke na maccusamamatthi bhayaṁ narānaṁ",
  "anya-e1209n:228": "Na vyādhidukkhasamamatthi ca kiṁci dukkhaṁ,",
  "anya-e1209n:229": "Evaṁ virūpakaraṇaṁ na jarāsamānaṁ",
  "anya-e1209n:230": "Mohena bho ratimupeti tathāpi dehe;",
  "anya-e1209n:231": "47.",
  "anya-e1209n:232": "Nissārato nalakalīkadalīsamānaṁ",
  "anya-e1209n:233": "Attānameva parihaññati attahetu,",
  "anya-e1209n:234": "Sampositopi kusahāya ivākataññū",
  "anya-e1209n:235": "Kāyo na yassa anugacchati kālakerā;",
  "anya-e1209n:236": "48.",
  "anya-e1209n:237": "Taṁ pheṇapiṇḍasadisaṁ visasūlakappaṁ",
  "anya-e1209n:238": "Toyā’nilā’nalamahīuragādhivāsaṁ,",
  "anya-e1209n:239": "Jiṇṇālayaṁva paridubbalamattabhāvaṁ",
  "anya-e1209n:240": "Disvā naro kathamupeti ratiṁ sapañño?",
  "anya-e1209n:241": "49.",
  "anya-e1209n:242": "Āyukkhayaṁ samupayāti khaṇe khaṇepi",
  "anya-e1209n:243": "Anveti maccu hananāya jarāsipāṇī,",
  "anya-e1209n:244": "Kālaṁ tathā na parivattati taṁ atītaṁ",
  "anya-e1209n:245": "Dukkhaṁ idaṁ nanu bhavesu acintanīyaṁ?",
  "anya-e1209n:246": "50.",
  "anya-e1209n:247": "Appāyukassa maraṇaṁ sulabhaṁ bhavesu",
  "anya-e1209n:248": "Dīghāyukassa ca jarā vyasanaṁ ca’nekaṁ,",
  "anya-e1209n:249": "Evaṁ bhave ubhayatopi ca dukkhameva",
  "anya-e1209n:250": "Dhammaṁ samācaratha dukkhavināsanāya;",
  "anya-e1209n:251": "51.",
  "anya-e1209n:252": "Dukkhagginā sumahatā paripīḷitesu",
  "anya-e1209n:253": "Lokattayassa vasato bhavavārakesu,",
  "anya-e1209n:254": "Sabbattatā sucaritassa pamādakālo",
  "anya-e1209n:255": "Bho bho na hoti paramaṁ kusalaṁ ciṇātha;",
  "anya-e1209n:256": "52.",
  "anya-e1209n:257": "Appaṁ sukhaṁ jalalavaṁ viya bho tiṇagge",
  "anya-e1209n:258": "Dukkhantu sāgarajalaṁ viya sabbaloke,",
  "anya-e1209n:259": "Saṁkappanā tadapi hoti sabhāvato hi",
  "anya-e1209n:260": "Sabbaṁ tilokamapi kevaladukkhameva;",
  "anya-e1209n:261": "53.",
  "anya-e1209n:262": "Kāyo na yassa anugacchati kāyahetu",
  "anya-e1209n:263": "Bālo anekavidhamācaratīha dukkhaṁ,",
  "anya-e1209n:264": "Kāyo sadā kali malākalilañhi loke",
  "anya-e1209n:265": "Kāye rato’navarataṁ vyasanaṁ pareti",
  "anya-e1209n:266": "54.",
  "anya-e1209n:267": "Mīḷhākaraṁ kalimalākaramāmagandhaṁ",
  "anya-e1209n:268": "Sūḷāsisallavisapannagarogabhūtaṁ,",
  "anya-e1209n:269": "Dehaṁ vipassatha jarāmaraṇādhivāsaṁ",
  "anya-e1209n:270": "Tucchaṁ sadā vigatasāramimaṁ vinindyaṁ;",
  "anya-e1209n:271": "55.",
  "anya-e1209n:272": "Dukkhaṁ aniccamasubhaṁ vata attabhāvaṁ",
  "anya-e1209n:273": "Mā saṁkilesaya na vijjati jātu nicco,",
  "anya-e1209n:274": "Ambho na vijjati hi appamapīha sāraṁ",
  "anya-e1209n:275": "Sāraṁ samācaratha dhammamalaṁ pamādaṁ;",
  "anya-e1209n:276": "56.",
  "anya-e1209n:277": "Māyāmarīcikadalīnalapheṇapuñja-",
  "anya-e1209n:278": "Gaṁgātaraṅgajalabubbulasannibhesu,",
  "anya-e1209n:279": "Khandhesu pañcasu chaḷāyatanesu tesu",
  "anya-e1209n:280": "Attā na vijjati hi ko na vadeyya’bālo?",
  "anya-e1209n:281": "57.",
  "anya-e1209n:282": "Vañjhāsuto sasavisāṇamaye rathe tu,",
  "anya-e1209n:283": "Dhāveyya ce cirataraṁ sadhuraṁ gahetvā,",
  "anya-e1209n:284": "Dīpaccimālamiva taṁ khaṇabhaṅgabhūtaṁ",
  "anya-e1209n:285": "Attāti dubbalatarantu vadeyya dehaṁ;",
  "anya-e1209n:286": "58.",
  "anya-e1209n:287": "Bālo yathā salilabubbulabhājanena",
  "anya-e1209n:288": "Ākaṇṭhato vata pibeyya marīcitoyaṁ,",
  "anya-e1209n:289": "Attāni sārarahitaṁ kadalīsamānaṁ",
  "anya-e1209n:290": "Mohā bhaṇeyya khalu dehamimaṁ anattaṁ;",
  "anya-e1209n:291": "59.",
  "anya-e1209n:292": "Yo’dumbarassa kusumena marīcitoyaṁ",
  "anya-e1209n:293": "Vāsaṁ yadicchati sa khedamupeti bālo,",
  "anya-e1209n:294": "Attānameva parihaññati attahetu",
  "anya-e1209n:295": "Attā na vijjati kadācidapīha dehe;",
  "anya-e1209n:296": "60.",
  "anya-e1209n:297": "Poso yathā hi kadalī suvinibbhujanto",
  "anya-e1209n:298": "Sāraṁ tadappampi nopalabheyya kāmaṁ,",
  "anya-e1209n:299": "Khandhesu paṁcasu chaḷāyatanesu tesu",
  "anya-e1209n:300": "Suññesu kiñcidapi nopalabheyya sāraṁ;",
  "anya-e1209n:301": "61.",
  "anya-e1209n:302": "Suttaṁ vinā na paṭabhāvamihatthi kiṁci",
  "anya-e1209n:303": "Dehaṁ vinā na khalu koci mihatthi satto,",
  "anya-e1209n:304": "Deho sabhāvarahito khaṇabhaṁgayutto,",
  "anya-e1209n:305": "Ko attahetu aparo bhuvi vijjatīha?",
  "anya-e1209n:306": "62.",
  "anya-e1209n:307": "Disvā marīcisalilañhi sudūrato bho",
  "anya-e1209n:308": "Bālo migo samupadhāvati toyasaññī,",
  "anya-e1209n:309": "Evaṁ sabhāvarahite viparītasiddhe",
  "anya-e1209n:310": "Dehe pareti parikappanayā hi rāgaṁ;",
  "anya-e1209n:311": "63.",
  "anya-e1209n:312": "Dehe sabhāvarahite parikappasiddhe",
  "anya-e1209n:313": "Attā na vijjati hi vijjumivantalikkhe,",
  "anya-e1209n:314": "Bhāvetha bhāvanaratā vigatappamādā",
  "anya-e1209n:315": "Sabbāsavappahananāya anattasaññaṁ;",
  "anya-e1209n:316": "64.",
  "anya-e1209n:317": "Lālākarīsarudhirassuvasānulittaṁ",
  "anya-e1209n:318": "Dehaṁ imaṁ kalimalākalilaṁ asāraṁ,",
  "anya-e1209n:319": "Sattā sadā pariharanti jigucchanīyaṁ",
  "anya-e1209n:320": "Nānāsucīhi paripuṇṇaghaṭaṁ yatheva;",
  "anya-e1209n:321": "65.",
  "anya-e1209n:322": "Ṇahātvā jalañhi sakalaṁ catusāgarassa",
  "anya-e1209n:323": "Meruppamāṇamapi gandhamanuttarañca,",
  "anya-e1209n:324": "Pappoti neva manujo hi suciṁ kadāci",
  "anya-e1209n:325": "Kiṁ bho vipassatha guṇaṁ kimu attabhāve?",
  "anya-e1209n:326": "66.",
  "anya-e1209n:327": "Deho sa eva vividhāsucisannidhāno",
  "anya-e1209n:328": "Deho sa eva vadhabandhanarogabhūto,",
  "anya-e1209n:329": "Deho sa eva navadhā paribhinnagaṇḍo",
  "anya-e1209n:330": "Dehaṁ vinā bhayakaraṁ na susānamatthi;",
  "anya-e1209n:331": "67.",
  "anya-e1209n:332": "Antogataṁ yadiva muttakarīsabhāgo",
  "anya-e1209n:333": "Dehā bahiṁ aticareyya vinikkhamitvā,",
  "anya-e1209n:334": "Mātā pitā vikaruṇā ca vinaṭṭhapemā",
  "anya-e1209n:335": "Kāmaṁ bhaveyyu kimu bandhusutā ca dārā?",
  "anya-e1209n:336": "68.",
  "anya-e1209n:337": "Dehaṁ yathā navamukhaṁ kimisaṅghagehaṁ",
  "anya-e1209n:338": "Maṁsaṭṭhisedarudhirākalilaṁ vigandhaṁ,",
  "anya-e1209n:339": "Posenti ye vividhapāpamihācaritvā",
  "anya-e1209n:340": "Te mohitā maraṇadhammamaho vatevaṁ!",
  "anya-e1209n:341": "69.",
  "anya-e1209n:342": "Gaṇḍūpame vividharoga nivāsabhūte",
  "anya-e1209n:343": "Kāye sadā rudhiramuttakarīsapuṇṇe,",
  "anya-e1209n:344": "Yo ettha nandati naro sasigālabhakkhe",
  "anya-e1209n:345": "Kāmañhi socati parattha sa bālabuddhi;",
  "anya-e1209n:346": "70.",
  "anya-e1209n:347": "Bho pheṇapiṇḍasadiso viya sārahīno",
  "anya-e1209n:348": "Mīḷhālayo viya sadā paṭikūlagandho,",
  "anya-e1209n:349": "Āsīvisālayanibho sabhayo sadukkho",
  "anya-e1209n:350": "Deho sadā savati loṇaghaṭova bhinno;",
  "anya-e1209n:351": "71.",
  "anya-e1209n:352": "Jātaṁ yathā na kamalaṁ bhuvi nindanīyaṁ",
  "anya-e1209n:353": "Paṅkesu bho asucitoya samākulesu,",
  "anya-e1209n:354": "Jātaṁ tathā parahitampi ca dehabhūtaṁ",
  "anya-e1209n:355": "Taṁ nindanīyamiha jātu na hoti loke;",
  "anya-e1209n:356": "72.",
  "anya-e1209n:357": "Dvattiṁsabhāgaparipūrataro viseso",
  "anya-e1209n:358": "Kāyo yathā hi naranāri gaṇassa loke,",
  "anya-e1209n:359": "Kāyesu kiṁ phalamihatthi ca paṇḍitānaṁ",
  "anya-e1209n:360": "Kāmaṁ tadeva nanu hoti paropakāraṁ;",
  "anya-e1209n:361": "73.",
  "anya-e1209n:362": "Posona paṇḍitatarena tathāpi deho",
  "anya-e1209n:363": "Sabbattanā cirataraṁ paripālanīyo,",
  "anya-e1209n:364": "Dhammaṁ careyya suciraṁ khalu jīvamāno",
  "anya-e1209n:365": "Dhamme have maṇivaro iva kāmado bho",
  "anya-e1209n:366": "74.",
  "anya-e1209n:367": "Khīre yathā suparibhāvitamosadhamhi",
  "anya-e1209n:368": "Snehena osadhabalaṁ paribhāsateva,",
  "anya-e1209n:369": "Dhammo tathā iha samācarito hi loke",
  "anya-e1209n:370": "Chāyāva yāti paraloka mito vajantaṁ;",
  "anya-e1209n:371": "75.",
  "anya-e1209n:372": "Kāyassa bho viracitassa yathānukūlaṁ",
  "anya-e1209n:373": "Chāyā vibhāti rucirāmaladappaṇe tu,",
  "anya-e1209n:374": "Katvā tatheva paramaṁ kusalaṁ parattha",
  "anya-e1209n:375": "Sambhūsitā iva bhavanti phalena tena;",
  "anya-e1209n:376": "76.",
  "anya-e1209n:377": "Dehe tathā vividhadukkha nivāsabhūte",
  "anya-e1209n:378": "Mohā pamādavasagā sukhasaññamūḷhā,",
  "anya-e1209n:379": "Tikkhe yathā khuramukhe madhulehamāno",
  "anya-e1209n:380": "Bāḷhañca dukkhamanugacchati hīnapañño;",
  "anya-e1209n:381": "77.",
  "anya-e1209n:382": "Saṁkapparāgavigate niratattabhāve",
  "anya-e1209n:383": "Dukkhaṁ sadā samadhigacchati appapañño,",
  "anya-e1209n:384": "Mūḷhassa ceva sukhasaññamihatthiloke",
  "anya-e1209n:385": "Kiṁpakkameva nanu hoti vicāramāne;",
  "anya-e1209n:386": "78.",
  "anya-e1209n:387": "Sabbopabhoga dhanadhaññavisesalābhī",
  "anya-e1209n:388": "Rūpena bho sa makaraddhajasannibhopi,",
  "anya-e1209n:389": "Yo yobbanepi maraṇaṁ labhate akāmaṁ",
  "anya-e1209n:390": "Kāmaṁ paratthaparapāṇaharo naro hi;",
  "anya-e1209n:391": "79.",
  "anya-e1209n:392": "So yācako bhavati bhinnakapālahattho",
  "anya-e1209n:393": "Muṇḍo dhigakkharasatehi ca tajjayanto,",
  "anya-e1209n:394": "Bhikkhaṁ sadāribhavane sakucelavāso",
  "anya-e1209n:395": "Dehe paratthi paracittaharo naro yo;",
  "anya-e1209n:396": "80.",
  "anya-e1209n:397": "Itthī namuñcati sadā puna itthibhāvā",
  "anya-e1209n:398": "Nārī sadā bhavati so puriso parattha,",
  "anya-e1209n:399": "Yo ācareyya paradāramalaṅghanīyaṁ",
  "anya-e1209n:400": "Ghorañca vindati sadā vyasanañca nekaṁ;",
  "anya-e1209n:401": "81.",
  "anya-e1209n:402": "Dīno vigandhavadano ca jaḷo apañño",
  "anya-e1209n:403": "Mūgo sadā bhavati appiyadassano ca,",
  "anya-e1209n:404": "Pappoti dukkhamatulañca manussabhūto",
  "anya-e1209n:405": "Vācaṁ musā bhaṇati yo hi apaññasatto;",
  "anya-e1209n:406": "82.",
  "anya-e1209n:407": "Ummattakā vigatalajjaguṇā bhavanti",
  "anya-e1209n:408": "Dīnā sadā vyasanasokaparāyaṇā ca,",
  "anya-e1209n:409": "Jātā bhavesu vividhesu virūpadehā",
  "anya-e1209n:410": "Pītvā halāhalavisaṁva suraṁ vipaññā;",
  "anya-e1209n:411": "83.",
  "anya-e1209n:412": "Pāpāni yena iha ācaritāni yāni",
  "anya-e1209n:413": "Yo vassakoṭinahutāni anappakāni,",
  "anya-e1209n:414": "Laddhāna ghoramatulaṁ narakesu dukkhaṁ",
  "anya-e1209n:415": "Pappoti cettha vividhavyasanañca nekaṁ;",
  "anya-e1209n:416": "84.",
  "anya-e1209n:417": "Lokattayesu sakalesu samaṁ na kiṁci",
  "anya-e1209n:418": "Lokassa santikaraṇaṁ ratanattayena,",
  "anya-e1209n:419": "Taṁtejasā sumahatā jitasabbapāpo",
  "anya-e1209n:420": "Sohaṁ sadādhigatasabbasukho bhaveyyaṁ;",
  "anya-e1209n:421": "85.",
  "anya-e1209n:422": "Lokattayesu sakalesu ca sabbasattā",
  "anya-e1209n:423": "Mittā ca majjharipubandhujanā ca sabbe,",
  "anya-e1209n:424": "Te sabbadā vigatarogabhayā visokā",
  "anya-e1209n:425": "Sabbaṁ sukhaṁ adhigatā muditā bhavantu;",
  "anya-e1209n:426": "86.",
  "anya-e1209n:427": "Kāyo karīsabharito viya bhinnakumbho",
  "anya-e1209n:428": "Kāyo sadā kalimalavyasanādhivāso,",
  "anya-e1209n:429": "Kāye vihaññati ca sabbasukhanti loko",
  "anya-e1209n:430": "Kāyo sadā maraṇarogajarādhivāso;",
  "anya-e1209n:431": "87.",
  "anya-e1209n:432": "So yobbanoti thaviroti ca bālakoti",
  "anya-e1209n:433": "Satte na pekkhati vihaññatireva maccu,",
  "anya-e1209n:434": "Sohaṁ ṭhitopi sayitopi ca pakkamanto",
  "anya-e1209n:435": "Gacchāmi maccuvadanaṁ niyataṁ tathā hi;",
  "anya-e1209n:436": "88.",
  "anya-e1209n:437": "Evaṁ yathā vihitadosamidaṁ sarīraṁ",
  "anya-e1209n:438": "Niccaṁva taggatamanā hadaye karotha,",
  "anya-e1209n:439": "Mettaṁ parittamasubhaṁ maraṇassatiñca",
  "anya-e1209n:440": "Bhāvetha bhāvanaratā satataṁ yatattā;",
  "anya-e1209n:441": "89.",
  "anya-e1209n:442": "Dānādi puññakiriyāni sukhudrayāni",
  "anya-e1209n:443": "Katvā ca tamphalamasesa mihappameyyaṁ,",
  "anya-e1209n:444": "Deyyaṁ sadā parahitāya sukhāya ceva",
  "anya-e1209n:445": "Kimbho tadeva nanu hatthagatañhi sāraṁ?",
  "anya-e1209n:446": "90.",
  "anya-e1209n:447": "Hetuṁ vinā na bhavatī hi ca kiṁci loke",
  "anya-e1209n:448": "Saddova pāṇitalaghaṭṭanahetujāto,",
  "anya-e1209n:449": "Evañca hetuphala bhāvavibhāgabhinno",
  "anya-e1209n:450": "Loko udeti ca vinassati tiṭṭhatī ca;",
  "anya-e1209n:451": "91.",
  "anya-e1209n:452": "Kammassa kāraṇāmayañhi yathā avijjā",
  "anya-e1209n:453": "Bho kammanā samadhigacchati jātibhedaṁ,",
  "anya-e1209n:454": "Jātiṁ paṭicca ca jarāmaraṇādidukkhaṁ",
  "anya-e1209n:455": "Sattā sadā paṭilabhanti anādikāle;",
  "anya-e1209n:456": "92.",
  "anya-e1209n:457": "Kammaṁ yathā na bhavatīha ca mohanāsā",
  "anya-e1209n:458": "Kammakkhayāpi ca na hoti bhavesu jāti,",
  "anya-e1209n:459": "Jātikkhayā iha jarāmaraṇādidukkhaṁ",
  "anya-e1209n:460": "Sabbakkhayo bhavati dīpevānilena;",
  "anya-e1209n:461": "93.",
  "anya-e1209n:462": "Yo passatīha satataṁ munidhammakāyaṁ",
  "anya-e1209n:463": "Buddhaṁ sa passati naro iti so avoca,",
  "anya-e1209n:464": "Buddhañca dhammamamalañca tilokanāthaṁ",
  "anya-e1209n:465": "Sampassituṁ vicinathā’pi ca dhammataṁ bho;",
  "anya-e1209n:466": "94.",
  "anya-e1209n:467": "Sallaṁva bho sunisitaṁ hadaye nimuggaṁ",
  "anya-e1209n:468": "Dosattayaṁ vividhapāpamalena littaṁ,",
  "anya-e1209n:469": "Nānāvidhabyasanabhājanamappasannaṁ",
  "anya-e1209n:470": "Paññāmayena balisena nirākarotha;",
  "anya-e1209n:471": "95.",
  "anya-e1209n:472": "Nākampayanti sakalāpi ca lokadhammā",
  "anya-e1209n:473": "Cittaṁ sadāpagatapāpakilesasallaṁ,",
  "anya-e1209n:474": "Rūpādayo ca vividhā visayā samaggā",
  "anya-e1209n:475": "Phuṭṭhaṁva merusikharaṁ mahatānilena;",
  "anya-e1209n:476": "96.",
  "anya-e1209n:477": "Saṁsāradukkhamagaṇeyya yathā munindo",
  "anya-e1209n:478": "Gambhirapāramita sāgaramuttaritvā,",
  "anya-e1209n:479": "Ñeyyaṁ abodhi nipuṇaṁ hatamohajālo",
  "anya-e1209n:480": "Tasmā sadā parahitaṁ paramaṁ ciṇātha;",
  "anya-e1209n:481": "97.",
  "anya-e1209n:482": "Ohāya so’dhigatamokkhasukhaṁ paresaṁ",
  "anya-e1209n:483": "Atthāya saṁcari bhavesu mahabbhayesu,",
  "anya-e1209n:484": "Evaṁ sadā parahitaṁ purato karitvā",
  "anya-e1209n:485": "Dhammo mayānucarito jagadatthameva;",
  "anya-e1209n:486": "98.",
  "anya-e1209n:487": "Laddhāna dullabhatarañca manussayoniṁ",
  "anya-e1209n:488": "Sabbaṁ papañcarahitaṁ khaṇasampadañca,",
  "anya-e1209n:489": "Ñatvāna āsavanudekahitañca dhammaṁ",
  "anya-e1209n:490": "Ko paññavā anavaraṁ na bhajeyya dhammaṁ?",
  "anya-e1209n:491": "99.",
  "anya-e1209n:492": "Laddhāna buddhasamayaṁ atidullabhaṁca",
  "anya-e1209n:493": "Saddhamma maggamasamaṁ sivadaṁ tatheva,",
  "anya-e1209n:494": "Kalyāṇamittapavare matisampadañca",
  "anya-e1209n:495": "Ko buddhimā anavaraṁ na bhajeyya dhammaṁ?",
  "anya-e1209n:496": "100.",
  "anya-e1209n:497": "Evampi dullabhataraṁ vibhave suladdhā",
  "anya-e1209n:498": "Maccheradosa viratā ubhayatthakāmā,",
  "anya-e1209n:499": "Saddhādidhammasahitā satatappamattā",
  "anya-e1209n:500": "Bho! Bho! Karotha amatādhigamāya puññaṁ;"
}