{
  "ja480:0.1": "Jātaka ",
  "ja480:0.2": "Terasakanipāta ",
  "ja480:0.3": "Ambavagga ",
  "ja480:0.4": "7. Akittijātaka ",
  "ja480:1.1": "“Akittiṁ disvā sammantaṁ, ",
  "ja480:1.2": "sakko bhūtapatī bravi; ",
  "ja480:1.3": "Kiṁ patthayaṁ mahābrahme, ",
  "ja480:1.4": "eko sammasi ghammani”. ",
  "ja480:2.1": "“Dukkho punabbhavo sakka, ",
  "ja480:2.2": "sarīrassa ca bhedanaṁ; ",
  "ja480:2.3": "Sammohamaraṇaṁ dukkhaṁ, ",
  "ja480:2.4": "tasmā sammāmi vāsava”. ",
  "ja480:3.1": "“Etasmiṁ te sulapite, ",
  "ja480:3.2": "patirūpe subhāsite; ",
  "ja480:3.3": "Varaṁ kassapa te dammi, ",
  "ja480:3.4": "yaṁ kiñci manasicchasi”. ",
  "ja480:4.1": "“Varañce me ado sakka, ",
  "ja480:4.2": "sabbabhūtānamissara; ",
  "ja480:4.3": "Yena putte ca dāre ca, ",
  "ja480:4.4": "dhanadhaññaṁ piyāni ca; ",
  "ja480:4.5": "Laddhā narā na tappanti, ",
  "ja480:4.6": "so lobho na mayī vase”. ",
  "ja480:5.1": "“Etasmiṁ te sulapite, ",
  "ja480:5.2": "patirūpe subhāsite; ",
  "ja480:5.3": "Varaṁ kassapa te dammi, ",
  "ja480:5.4": "yaṁ kiñci manasicchasi”. ",
  "ja480:6.1": "“Varañce me ado sakka, ",
  "ja480:6.2": "sabbabhūtānamissara; ",
  "ja480:6.3": "Khettaṁ vatthuṁ hiraññañca, ",
  "ja480:6.4": "gavāssaṁ dāsaporisaṁ; ",
  "ja480:6.5": "Yena jātena jīyanti, ",
  "ja480:6.6": "so doso na mayī vase”. ",
  "ja480:7.1": "“Etasmiṁ te sulapite, ",
  "ja480:7.2": "patirūpe subhāsite; ",
  "ja480:7.3": "Varaṁ kassapa te dammi, ",
  "ja480:7.4": "yaṁ kiñci manasicchasi”. ",
  "ja480:8.1": "“Varañce me ado sakka, ",
  "ja480:8.2": "sabbabhūtānamissara; ",
  "ja480:8.3": "Bālaṁ na passe na suṇe, ",
  "ja480:8.4": "na ca bālena saṁvase; ",
  "ja480:8.5": "Bālenallāpasallāpaṁ, ",
  "ja480:8.6": "na kare na ca rocaye”. ",
  "ja480:9.1": "“Kiṁ nu te akaraṁ bālo, ",
  "ja480:9.2": "vada kassapa kāraṇaṁ; ",
  "ja480:9.3": "Kena kassapa bālassa, ",
  "ja480:9.4": "dassanaṁ nābhikaṅkhasi”. ",
  "ja480:10.1": "“Anayaṁ nayati dummedho, ",
  "ja480:10.2": "adhurāyaṁ niyuñjati; ",
  "ja480:10.3": "Dunnayo seyyaso hoti, ",
  "ja480:10.4": "sammā vutto pakuppati; ",
  "ja480:10.5": "Vinayaṁ so na jānāti, ",
  "ja480:10.6": "sādhu tassa adassanaṁ”. ",
  "ja480:11.1": "“Etasmiṁ te sulapite, ",
  "ja480:11.2": "patirūpe subhāsite; ",
  "ja480:11.3": "Varaṁ kassapa te dammi, ",
  "ja480:11.4": "yaṁ kiñci manasicchasi”. ",
  "ja480:12.1": "“Varañce me ado sakka, ",
  "ja480:12.2": "sabbabhūtānamissara; ",
  "ja480:12.3": "Dhīraṁ passe suṇe dhīraṁ, ",
  "ja480:12.4": "dhīrena saha saṁvase; ",
  "ja480:12.5": "Dhīrenallāpasallāpaṁ, ",
  "ja480:12.6": "taṁ kare tañca rocaye”. ",
  "ja480:13.1": "“Kiṁ nu te akaraṁ dhīro, ",
  "ja480:13.2": "vada kassapa kāraṇaṁ; ",
  "ja480:13.3": "Kena kassapa dhīrassa, ",
  "ja480:13.4": "dassanaṁ abhikaṅkhasi”. ",
  "ja480:14.1": "“Nayaṁ nayati medhāvī, ",
  "ja480:14.2": "adhurāyaṁ na yuñjati; ",
  "ja480:14.3": "Sunayo seyyaso hoti, ",
  "ja480:14.4": "sammā vutto na kuppati; ",
  "ja480:14.5": "Vinayaṁ so pajānāti, ",
  "ja480:14.6": "sādhu tena samāgamo”. ",
  "ja480:15.1": "“Etasmiṁ te sulapite, ",
  "ja480:15.2": "patirūpe subhāsite; ",
  "ja480:15.3": "Varaṁ kassapa te dammi, ",
  "ja480:15.4": "yaṁ kiñci manasicchasi”. ",
  "ja480:16.1": "“Varañce me ado sakka, ",
  "ja480:16.2": "sabbabhūtānamissara; ",
  "ja480:16.3": "Tato ratyā vivasāne, ",
  "ja480:16.4": "sūriyuggamanaṁ pati; ",
  "ja480:16.5": "Dibbā bhakkhā pātubhaveyyuṁ, ",
  "ja480:16.6": "sīlavanto ca yācakā. ",
  "ja480:17.1": "Dadato me na khīyetha, ",
  "ja480:17.2": "datvā nānutapeyyahaṁ; ",
  "ja480:17.3": "Dadaṁ cittaṁ pasādeyyaṁ, ",
  "ja480:17.4": "etaṁ sakka varaṁ vare”. ",
  "ja480:18.1": "“Etasmiṁ te sulapite, ",
  "ja480:18.2": "patirūpe subhāsite; ",
  "ja480:18.3": "Varaṁ kassapa te dammi, ",
  "ja480:18.4": "yaṁ kiñci manasicchasi”. ",
  "ja480:19.1": "“Varañce me ado sakka, ",
  "ja480:19.2": "sabbabhūtānamissara; ",
  "ja480:19.3": "Na maṁ puna upeyyāsi, ",
  "ja480:19.4": "etaṁ sakka varaṁ vare”. ",
  "ja480:20.1": "“Bahūhi vatacariyāhi, ",
  "ja480:20.2": "narā ca atha nāriyo; ",
  "ja480:20.3": "Dassanaṁ abhikaṅkhanti, ",
  "ja480:20.4": "kiṁ nu me dassane bhayaṁ”. ",
  "ja480:21.1": "“Taṁ tādisaṁ devavaṇṇaṁ, ",
  "ja480:21.2": "sabbakāmasamiddhinaṁ; ",
  "ja480:21.3": "Disvā tapo pamajjeyyaṁ, ",
  "ja480:21.4": "etaṁ te dassane bhayan”ti. ",
  "ja480:22.1": "Akittijātakaṁ sattamaṁ. "
}