{
  "vv17:0.1": "Vimānavatthu ",
  "vv17:0.2": "Itthivimāna ",
  "vv17:0.3": "Pīṭhavagga ",
  "vv17:0.4": "17. Kesakārīvimānavatthu ",
  "vv17:1.1": "“Idaṁ vimānaṁ ruciraṁ pabhassaraṁ, ",
  "vv17:1.2": "Veḷuriyathambhaṁ satataṁ sunimmitaṁ; ",
  "vv17:1.3": "Suvaṇṇarukkhehi samantamotthataṁ, ",
  "vv17:1.4": "Ṭhānaṁ mamaṁ kammavipākasambhavaṁ. ",
  "vv17:2.1": "Tatrūpapannā purimaccharā imā, ",
  "vv17:2.2": "Sataṁ sahassāni sakena kammunā; ",
  "vv17:2.3": "Tuvaṁsi ajjhupagatā yasassinī, ",
  "vv17:2.4": "Obhāsayaṁ tiṭṭhasi pubbadevatā. ",
  "vv17:3.1": "Sasī adhiggayha yathā virocati, ",
  "vv17:3.2": "Nakkhattarājāriva tārakāgaṇaṁ; ",
  "vv17:3.3": "Tatheva tvaṁ accharāsaṅgaṇaṁ imaṁ, ",
  "vv17:3.4": "Daddallamānā yasasā virocasi. ",
  "vv17:4.1": "Kuto nu āgamma anomadassane, ",
  "vv17:4.2": "Upapannā tvaṁ bhavanaṁ mamaṁ idaṁ; ",
  "vv17:4.3": "Brahmaṁva devā tidasā sahindakā, ",
  "vv17:4.4": "Sabbe na tappāmase dassanena tan”ti. ",
  "vv17:5.1": "“Yametaṁ sakka anupucchase mamaṁ, ",
  "vv17:5.2": "‘Kuto cutā tvaṁ idha āgatā’ti; ",
  "vv17:5.3": "Bārāṇasī nāma puratthi kāsinaṁ, ",
  "vv17:5.4": "Tattha ahosiṁ pure kesakārikā. ",
  "vv17:6.1": "Buddhe ca dhamme ca pasannamānasā, ",
  "vv17:6.2": "Saṅghe ca ekantagatā asaṁsayā; ",
  "vv17:6.3": "Akhaṇḍasikkhāpadā āgatapphalā, ",
  "vv17:6.4": "Sambodhidhamme niyatā anāmayā”ti. ",
  "vv17:7.1": "“Tantyābhinandāmase svāgatañca te, ",
  "vv17:7.2": "Dhammena ca tvaṁ yasasā virocasi; ",
  "vv17:7.3": "Buddhe ca dhamme ca pasannamānase, ",
  "vv17:7.4": "Saṅghe ca ekantagate asaṁsaye; ",
  "vv17:7.5": "Akhaṇḍasikkhāpade āgatapphale, ",
  "vv17:7.6": "Sambodhidhamme niyate anāmaye”ti. ",
  "vv17:8.1": "Kesakārīvimānaṁ sattarasamaṁ. ",
  "vv17:9.1": "Tassuddānaṁ ",
  "vv17:10.1": "Pañca pīṭhā tayo nāvā, ",
  "vv17:10.2": "dīpatiladakkhiṇā dve; ",
  "vv17:10.3": "Pati dve suṇisā uttarā, ",
  "vv17:10.4": "sirimā kesakārikā; ",
  "vv17:10.5": "Vaggo tena pavuccatīti. ",
  "vv17:11.1": "Itthivimāne paṭhamo vaggo. "
}