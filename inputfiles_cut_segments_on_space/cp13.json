{
  "cp13:0.1": "Cariyāpiṭaka ",
  "cp13:0.2": "Hatthināgavagga ",
  "cp13:0.3": "Sīlapāramī 3 ",
  "cp13:0.4": "Campeyyanāgacariya ",
  "cp13:1.1": "“Punāparaṁ yadā homi, ",
  "cp13:1.2": "campeyyako mahiddhiko; ",
  "cp13:1.3": "Tadāpi dhammiko āsiṁ, ",
  "cp13:1.4": "sīlabbatasamappito. ",
  "cp13:2.1": "Tadāpi maṁ dhammacāriṁ, ",
  "cp13:2.2": "upavutthaṁ uposathaṁ; ",
  "cp13:2.3": "Ahituṇḍiko gahetvāna, ",
  "cp13:2.4": "rājadvāramhi kīḷati. ",
  "cp13:3.1": "Yaṁ yaṁ so vaṇṇaṁ cintayi, ",
  "cp13:3.2": "nīlaṁva pītalohitaṁ; ",
  "cp13:3.3": "Tassa cittānuvattanto, ",
  "cp13:3.4": "homi cintitasannibho. ",
  "cp13:4.1": "Thalaṁ kareyyamudakaṁ, ",
  "cp13:4.2": "udakampi thalaṁ kare; ",
  "cp13:4.3": "Yadihaṁ tassa pakuppeyyaṁ, ",
  "cp13:4.4": "khaṇena chārikaṁ kare. ",
  "cp13:5.1": "Yadi cittavasī hessaṁ, ",
  "cp13:5.2": "parihāyissāmi sīlato; ",
  "cp13:5.3": "Sīlena parihīnassa, ",
  "cp13:5.4": "uttamattho na sijjhati. ",
  "cp13:6.1": "Kāmaṁ bhijjatuyaṁ kāyo, ",
  "cp13:6.2": "idheva vikirīyatu; ",
  "cp13:6.3": "Neva sīlaṁ pabhindeyyaṁ, ",
  "cp13:6.4": "vikirante bhusaṁ viyā”ti. ",
  "cp13:7.1": "Campeyyanāgacariyaṁ tatiyaṁ. "
}