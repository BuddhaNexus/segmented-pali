{
  "pv26:0.1": "Petavatthu ",
  "pv26:0.2": "Cūḷavagga ",
  "pv26:0.3": "1. Abhijjamānapetavatthu ",
  "pv26:1.1": "“Abhijjamāne vārimhi, ",
  "pv26:1.2": "gaṅgāya idha gacchasi; ",
  "pv26:1.3": "Naggo pubbaddhapetova, ",
  "pv26:1.4": "māladhārī alaṅkato; ",
  "pv26:1.5": "Kuhiṁ gamissasi peta, ",
  "pv26:1.6": "kattha vāso bhavissatī”ti. ",
  "pv26:2.1": "“Cundaṭṭhilaṁ gamissāmi, ",
  "pv26:2.2": "peto so iti bhāsati; ",
  "pv26:2.3": "Antare vāsabhagāmaṁ, ",
  "pv26:2.4": "bārāṇasiṁ ca santike”. ",
  "pv26:3.1": "Tañca disvā mahāmatto, ",
  "pv26:3.2": "koliyo iti vissuto; ",
  "pv26:3.3": "Sattuṁ bhattañca petassa, ",
  "pv26:3.4": "pītakañca yugaṁ adā. ",
  "pv26:4.1": "Nāvāya tiṭṭhamānāya, ",
  "pv26:4.2": "kappakassa adāpayi; ",
  "pv26:4.3": "Kappakassa padinnamhi, ",
  "pv26:4.4": "ṭhāne petassa dissatha. ",
  "pv26:5.1": "Tato suvatthavasano, ",
  "pv26:5.2": "māladhārī alaṅkato; ",
  "pv26:5.3": "Ṭhāne ṭhitassa petassa, ",
  "pv26:5.4": "dakkhiṇā upakappatha; ",
  "pv26:5.5": "Tasmā dajjetha petānaṁ, ",
  "pv26:5.6": "anukampāya punappunaṁ. ",
  "pv26:6.1": "Sātunnavasanā eke, ",
  "pv26:6.2": "aññe kesanivāsanā; ",
  "pv26:6.3": "Petā bhattāya gacchanti, ",
  "pv26:6.4": "pakkamanti disodisaṁ. ",
  "pv26:7.1": "Dūre eke padhāvitvā, ",
  "pv26:7.2": "aladdhāva nivattare; ",
  "pv26:7.3": "Chātā pamucchitā bhantā, ",
  "pv26:7.4": "bhūmiyaṁ paṭisumbhitā. ",
  "pv26:8.1": "Te ca tattha papatitā, ",
  "pv26:8.2": "bhūmiyaṁ paṭisumbhitā; ",
  "pv26:8.3": "Pubbe akatakalyāṇā, ",
  "pv26:8.4": "aggidaḍḍhāva ātape. ",
  "pv26:9.1": "“Mayaṁ pubbe pāpadhammā, ",
  "pv26:9.2": "gharaṇī kulamātaro; ",
  "pv26:9.3": "Santesu deyyadhammesu, ",
  "pv26:9.4": "dīpaṁ nākamha attano. ",
  "pv26:10.1": "Pahūtaṁ annapānampi, ",
  "pv26:10.2": "apissu avakirīyati; ",
  "pv26:10.3": "Sammaggate pabbajite, ",
  "pv26:10.4": "na ca kiñci adamhase. ",
  "pv26:11.1": "Akammakāmā alasā, ",
  "pv26:11.2": "Sādukāmā mahagghasā; ",
  "pv26:11.3": "Ālopapiṇḍadātāro, ",
  "pv26:11.4": "Paṭiggahe paribhāsimhase. ",
  "pv26:12.1": "Te gharā tā ca dāsiyo, ",
  "pv26:12.2": "tānevābharaṇāni no; ",
  "pv26:12.3": "Te aññe paricārenti, ",
  "pv26:12.4": "mayaṁ dukkhassa bhāgino. ",
  "pv26:13.1": "Veṇī vā avaññā honti, ",
  "pv26:13.2": "rathakārī ca dubbhikā; ",
  "pv26:13.3": "Caṇḍālī kapaṇā honti, ",
  "pv26:13.4": "kappakā ca punappunaṁ. ",
  "pv26:14.1": "Yāni yāni nihīnāni, ",
  "pv26:14.2": "kulāni kapaṇāni ca; ",
  "pv26:14.3": "Tesu tesveva jāyanti, ",
  "pv26:14.4": "esā maccharino gati. ",
  "pv26:15.1": "Pubbe ca katakalyāṇā, ",
  "pv26:15.2": "dāyakā vītamaccharā; ",
  "pv26:15.3": "Saggaṁ te paripūrenti, ",
  "pv26:15.4": "obhāsenti ca nandanaṁ. ",
  "pv26:16.1": "Vejayante ca pāsāde, ",
  "pv26:16.2": "ramitvā kāmakāmino; ",
  "pv26:16.3": "Uccākulesu jāyanti, ",
  "pv26:16.4": "sabhogesu tato cutā. ",
  "pv26:17.1": "Kūṭāgāre ca pāsāde, ",
  "pv26:17.2": "pallaṅke gonakatthate; ",
  "pv26:17.3": "Bījitaṅgā morahatthehi, ",
  "pv26:17.4": "kule jātā yasassino. ",
  "pv26:18.1": "Aṅkato aṅkaṁ gacchanti, ",
  "pv26:18.2": "māladhārī alaṅkatā; ",
  "pv26:18.3": "Dhātiyo upatiṭṭhanti, ",
  "pv26:18.4": "sāyaṁ pātaṁ sukhesino. ",
  "pv26:19.1": "Nayidaṁ akatapuññānaṁ, ",
  "pv26:19.2": "katapuññānamevidaṁ; ",
  "pv26:19.3": "Asokaṁ nandanaṁ rammaṁ, ",
  "pv26:19.4": "tidasānaṁ mahāvanaṁ. ",
  "pv26:20.1": "Sukhaṁ akatapuññānaṁ, ",
  "pv26:20.2": "idha natthi parattha ca; ",
  "pv26:20.3": "Sukhañca katapuññānaṁ, ",
  "pv26:20.4": "idha ceva parattha ca. ",
  "pv26:21.1": "Tesaṁ sahabyakāmānaṁ, ",
  "pv26:21.2": "kattabbaṁ kusalaṁ bahuṁ; ",
  "pv26:21.3": "Katapuññā hi modanti, ",
  "pv26:21.4": "sagge bhogasamaṅgino”ti. ",
  "pv26:22.1": "Abhijjamānapetavatthu paṭhamaṁ. "
}