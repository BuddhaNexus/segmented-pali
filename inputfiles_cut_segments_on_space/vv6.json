{
  "vv6:0.1": "Vimānavatthu ",
  "vv6:0.2": "Itthivimāna ",
  "vv6:0.3": "Pīṭhavagga ",
  "vv6:0.4": "6. Paṭhamanāvāvimānavatthu ",
  "vv6:1.1": "“Suvaṇṇacchadanaṁ nāvaṁ, ",
  "vv6:1.2": "Nāri āruyha tiṭṭhasi; ",
  "vv6:1.3": "Ogāhasi pokkharaṇiṁ, ",
  "vv6:1.4": "Padmaṁ chindasi pāṇinā. ",
  "vv6:2.1": "Kena tetādiso vaṇṇo, ",
  "vv6:2.2": "kena te idha mijjhati; ",
  "vv6:2.3": "Uppajjanti ca te bhogā, ",
  "vv6:2.4": "ye keci manaso piyā. ",
  "vv6:3.1": "Pucchāmi taṁ devi mahānubhāve, ",
  "vv6:3.2": "Manussabhūtā kimakāsi puññaṁ; ",
  "vv6:3.3": "Kenāsi evaṁ jalitānubhāvā, ",
  "vv6:3.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti. ",
  "vv6:4.1": "Sā devatā attamanā, ",
  "vv6:4.2": "moggallānena pucchitā; ",
  "vv6:4.3": "Pañhaṁ puṭṭhā viyākāsi, ",
  "vv6:4.4": "yassa kammassidaṁ phalaṁ. ",
  "vv6:5.1": "“Ahaṁ manussesu manussabhūtā, ",
  "vv6:5.2": "Purimāya jātiyā manussaloke; ",
  "vv6:5.3": "Disvāna bhikkhū tasite kilante, ",
  "vv6:5.4": "Uṭṭhāya pātuṁ udakaṁ adāsiṁ. ",
  "vv6:6.1": "Yo ve kilantāna pipāsitānaṁ, ",
  "vv6:6.2": "Uṭṭhāya pātuṁ udakaṁ dadāti; ",
  "vv6:6.3": "Sītodakā tassa bhavanti najjo, ",
  "vv6:6.4": "Pahūtamalyā bahupuṇḍarīkā. ",
  "vv6:7.1": "Taṁ āpagā anupariyanti sabbadā, ",
  "vv6:7.2": "Sītodakā vālukasanthatā nadī; ",
  "vv6:7.3": "Ambā ca sālā tilakā ca jambuyo, ",
  "vv6:7.4": "Uddālakā pāṭaliyo ca phullā. ",
  "vv6:8.1": "Taṁ bhūmibhāgehi upetarūpaṁ, ",
  "vv6:8.2": "Vimānaseṭṭhaṁ bhusa sobhamānaṁ; ",
  "vv6:8.3": "Tassīdha kammassa ayaṁ vipāko, ",
  "vv6:8.4": "Etādisaṁ puññakatā labhanti. ",
  "vv6:9.1": "Tena metādiso vaṇṇo, ",
  "vv6:9.2": "tena me idha mijjhati; ",
  "vv6:9.3": "Uppajjanti ca me bhogā, ",
  "vv6:9.4": "ye keci manaso piyā. ",
  "vv6:10.1": "Akkhāmi te bhikkhu mahānubhāva, ",
  "vv6:10.2": "Manussabhūtā yamakāsi puññaṁ; ",
  "vv6:10.3": "Tenamhi evaṁ jalitānubhāvā, ",
  "vv6:10.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti. ",
  "vv6:11.1": "Paṭhamanāvāvimānaṁ chaṭṭhaṁ. "
}