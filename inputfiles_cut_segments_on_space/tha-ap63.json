{
  "tha-ap63:0.1": "Therāpadāna ",
  "tha-ap63:0.2": "Sakacintaniyavagga ",
  "tha-ap63:0.3": "1 Sakacintaniyattheraapadāna ",
  "tha-ap63:1.1": "“Pavanaṁ kānanaṁ disvā, ",
  "tha-ap63:1.2": "appasaddamanāvilaṁ; ",
  "tha-ap63:1.3": "Isīnaṁ anuciṇṇaṁva, ",
  "tha-ap63:1.4": "āhutīnaṁ paṭiggahaṁ. ",
  "tha-ap63:2.1": "Thūpaṁ katvāna pulinaṁ, ",
  "tha-ap63:2.2": "nānāpupphaṁ samokiriṁ; ",
  "tha-ap63:2.3": "Sammukhā viya sambuddhaṁ, ",
  "tha-ap63:2.4": "nimmitaṁ abhivandahaṁ. ",
  "tha-ap63:3.1": "Sattaratanasampanno, ",
  "tha-ap63:3.2": "rājā raṭṭhamhi issaro; ",
  "tha-ap63:3.3": "Sakakammābhiraddhohaṁ, ",
  "tha-ap63:3.4": "pupphapūjāyidaṁ phalaṁ. ",
  "tha-ap63:4.1": "Ekanavutito kappe, ",
  "tha-ap63:4.2": "yaṁ pupphamabhiropayiṁ; ",
  "tha-ap63:4.3": "Duggatiṁ nābhijānāmi, ",
  "tha-ap63:4.4": "pupphapūjāyidaṁ phalaṁ. ",
  "tha-ap63:5.1": "Asītikappenantayaso, ",
  "tha-ap63:5.2": "cakkavattī ahosahaṁ; ",
  "tha-ap63:5.3": "Sattaratanasampanno, ",
  "tha-ap63:5.4": "catudīpamhi issaro. ",
  "tha-ap63:6.1": "Paṭisambhidā catasso, ",
  "tha-ap63:6.2": "vimokkhāpi ca aṭṭhime; ",
  "tha-ap63:6.3": "Chaḷabhiññā sacchikatā, ",
  "tha-ap63:6.4": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap63:7.1": "Itthaṁ sudaṁ āyasmā sakacintaniyo thero imā gāthāyo abhāsitthāti. ",
  "tha-ap63:8.1": "Sakacintaniyattherassāpadānaṁ paṭhamaṁ. "
}