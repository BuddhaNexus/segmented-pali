{
  "cp22:0.1": "Cariyāpiṭaka ",
  "cp22:0.2": "Yudhañjayavagga ",
  "cp22:0.3": "Nekkhammapāramī 2 ",
  "cp22:0.4": "Somanassacariya ",
  "cp22:1.1": "“Punāparaṁ yadā homi, ",
  "cp22:1.2": "indapatthe puruttame; ",
  "cp22:1.3": "Kāmito dayito putto, ",
  "cp22:1.4": "somanassoti vissuto. ",
  "cp22:2.1": "Sīlavā guṇasampanno, ",
  "cp22:2.2": "kalyāṇapaṭibhānavā; ",
  "cp22:2.3": "Vuḍḍhāpacāyī hirīmā, ",
  "cp22:2.4": "saṅgahesu ca kovido. ",
  "cp22:3.1": "Tassa rañño patikaro, ",
  "cp22:3.2": "ahosi kuhakatāpaso; ",
  "cp22:3.3": "Ārāmaṁ mālāvacchañca, ",
  "cp22:3.4": "ropayitvāna jīvati. ",
  "cp22:4.1": "Tamahaṁ disvāna kuhakaṁ, ",
  "cp22:4.2": "thusarāsiṁva ataṇḍulaṁ; ",
  "cp22:4.3": "Dumaṁva anto susiraṁ, ",
  "cp22:4.4": "kadaliṁva asārakaṁ. ",
  "cp22:5.1": "Natthimassa sataṁ dhammo, ",
  "cp22:5.2": "sāmaññāpagato ayaṁ; ",
  "cp22:5.3": "Hirīsukkadhammajahito, ",
  "cp22:5.4": "jīvitavuttikāraṇā. ",
  "cp22:6.1": "Kupito ahu paccanto, ",
  "cp22:6.2": "aṭavīhi parantihi; ",
  "cp22:6.3": "Taṁ nisedhetuṁ gacchanto, ",
  "cp22:6.4": "anusāsi pitā mamaṁ. ",
  "cp22:7.1": "‘Mā pamajji tuvaṁ tāta, ",
  "cp22:7.2": "jaṭilaṁ uggatāpanaṁ; ",
  "cp22:7.3": "Yadicchakaṁ pavattehi, ",
  "cp22:7.4": "sabbakāmadado hi so’. ",
  "cp22:8.1": "Tamahaṁ gantvānupaṭṭhānaṁ, ",
  "cp22:8.2": "Idaṁ vacanamabraviṁ; ",
  "cp22:8.3": "‘Kacci te gahapati kusalaṁ, ",
  "cp22:8.4": "Kiṁ vā te āharīyatu’. ",
  "cp22:9.1": "Tena so kupito āsi, ",
  "cp22:9.2": "kuhako mānanissito; ",
  "cp22:9.3": "‘Ghātāpemi tuvaṁ ajja, ",
  "cp22:9.4": "raṭṭhā pabbājayāmi vā’. ",
  "cp22:10.1": "Nisedhayitvā paccantaṁ, ",
  "cp22:10.2": "rājā kuhakamabravi; ",
  "cp22:10.3": "‘Kacci te bhante khamanīyaṁ, ",
  "cp22:10.4": "sammāno te pavattito’. ",
  "cp22:11.1": "Tassa ācikkhatī pāpo, ",
  "cp22:11.2": "kumāro yathā nāsiyo; ",
  "cp22:11.3": "Tassa taṁ vacanaṁ sutvā, ",
  "cp22:11.4": "āṇāpesi mahīpati. ",
  "cp22:12.1": "‘Sīsaṁ tattheva chinditvā, ",
  "cp22:12.2": "katvāna catukhaṇḍikaṁ; ",
  "cp22:12.3": "Rathiyā rathiyaṁ dassetha, ",
  "cp22:12.4": "sā gati jaṭilahīḷitā’. ",
  "cp22:13.1": "Tattha kāraṇikā gantvā, ",
  "cp22:13.2": "caṇḍā luddā akāruṇā; ",
  "cp22:13.3": "Mātu aṅke nisinnassa, ",
  "cp22:13.4": "ākaḍḍhitvā nayanti maṁ. ",
  "cp22:14.1": "Tesāhaṁ evamavacaṁ, ",
  "cp22:14.2": "bandhataṁ gāḷhabandhanaṁ; ",
  "cp22:14.3": "‘Rañño dassetha maṁ khippaṁ, ",
  "cp22:14.4": "rājakiriyāni atthi me’. ",
  "cp22:15.1": "Te maṁ rañño dassayiṁsu, ",
  "cp22:15.2": "pāpassa pāpasevino; ",
  "cp22:15.3": "Disvāna taṁ saññāpesiṁ, ",
  "cp22:15.4": "mamañca vasamānayiṁ. ",
  "cp22:16.1": "So maṁ tattha khamāpesi, ",
  "cp22:16.2": "mahārajjamadāsi me; ",
  "cp22:16.3": "Sohaṁ tamaṁ dālayitvā, ",
  "cp22:16.4": "pabbajiṁ anagāriyaṁ. ",
  "cp22:17.1": "Na me dessaṁ mahārajjaṁ, ",
  "cp22:17.2": "kāmabhogo na dessiyo; ",
  "cp22:17.3": "Sabbaññutaṁ piyaṁ mayhaṁ, ",
  "cp22:17.4": "tasmā rajjaṁ pariccajin”ti. ",
  "cp22:18.1": "Somanassacariyaṁ dutiyaṁ. "
}