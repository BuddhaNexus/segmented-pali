{
  "cp8:0.1": "Cariyāpiṭaka ",
  "cp8:0.2": "Akittivagga ",
  "cp8:0.3": "Dānapāramī 8 ",
  "cp8:0.4": "Sivirājacariya ",
  "cp8:1.1": "“Ariṭṭhasavhaye nagare, ",
  "cp8:1.2": "sivināmāsi khattiyo; ",
  "cp8:1.3": "Nisajja pāsādavare, ",
  "cp8:1.4": "evaṁ cintesahaṁ tadā. ",
  "cp8:2.1": "‘Yaṁ kiñci mānusaṁ dānaṁ, ",
  "cp8:2.2": "adinnaṁ me na vijjati; ",
  "cp8:2.3": "Yopi yāceyya maṁ cakkhuṁ, ",
  "cp8:2.4": "dadeyyaṁ avikampito’. ",
  "cp8:3.1": "Mama saṅkappamaññāya, ",
  "cp8:3.2": "sakko devānamissaro; ",
  "cp8:3.3": "Nisinno devaparisāya, ",
  "cp8:3.4": "idaṁ vacanamabravi. ",
  "cp8:4.1": "‘Nisajja pāsādavare, ",
  "cp8:4.2": "sivirājā mahiddhiko; ",
  "cp8:4.3": "Cintento vividhaṁ dānaṁ, ",
  "cp8:4.4": "adeyyaṁ so na passati. ",
  "cp8:5.1": "Tathaṁ nu vitathaṁ netaṁ, ",
  "cp8:5.2": "handa vīmaṁsayāmi taṁ; ",
  "cp8:5.3": "Muhuttaṁ āgameyyātha, ",
  "cp8:5.4": "yāva jānāmi taṁ manaṁ’. ",
  "cp8:6.1": "Pavedhamāno palitasiro, ",
  "cp8:6.2": "Valigatto jarāturo; ",
  "cp8:6.3": "Andhavaṇṇova hutvāna, ",
  "cp8:6.4": "Rājānaṁ upasaṅkami. ",
  "cp8:7.1": "So tadā paggahetvāna, ",
  "cp8:7.2": "vāmaṁ dakkhiṇabāhu ca; ",
  "cp8:7.3": "Sirasmiṁ añjaliṁ katvā, ",
  "cp8:7.4": "idaṁ vacanamabravi. ",
  "cp8:8.1": "‘Yācāmi taṁ mahārāja, ",
  "cp8:8.2": "dhammika raṭṭhavaḍḍhana; ",
  "cp8:8.3": "Tava dānaratā kitti, ",
  "cp8:8.4": "uggatā devamānuse. ",
  "cp8:9.1": "Ubhopi nettā nayanā, ",
  "cp8:9.2": "andhā upahatā mama; ",
  "cp8:9.3": "Ekaṁ me nayanaṁ dehi, ",
  "cp8:9.4": "tvampi ekena yāpaya’. ",
  "cp8:10.1": "Tassāhaṁ vacanaṁ sutvā, ",
  "cp8:10.2": "haṭṭho saṁviggamānaso; ",
  "cp8:10.3": "Katañjalī vedajāto, ",
  "cp8:10.4": "idaṁ vacanamabraviṁ. ",
  "cp8:11.1": "‘Idānāhaṁ cintayitvāna, ",
  "cp8:11.2": "pāsādato idhāgato; ",
  "cp8:11.3": "Tvaṁ mama cittamaññāya, ",
  "cp8:11.4": "nettaṁ yācitumāgato. ",
  "cp8:12.1": "Aho me mānasaṁ siddhaṁ, ",
  "cp8:12.2": "saṅkappo paripūrito; ",
  "cp8:12.3": "Adinnapubbaṁ dānavaraṁ, ",
  "cp8:12.4": "ajja dassāmi yācake. ",
  "cp8:13.1": "Ehi sivaka uṭṭhehi, ",
  "cp8:13.2": "mā dandhayi mā pavedhayi; ",
  "cp8:13.3": "Ubhopi nayanaṁ dehi, ",
  "cp8:13.4": "uppāṭetvā vaṇibbake’. ",
  "cp8:14.1": "Tato so codito mayhaṁ, ",
  "cp8:14.2": "sivako vacanaṁ karo; ",
  "cp8:14.3": "Uddharitvāna pādāsi, ",
  "cp8:14.4": "tālamiñjaṁva yācake. ",
  "cp8:15.1": "Dadamānassa dentassa, ",
  "cp8:15.2": "dinnadānassa me sato; ",
  "cp8:15.3": "Cittassa aññathā natthi, ",
  "cp8:15.4": "bodhiyāyeva kāraṇā. ",
  "cp8:16.1": "Na me dessā ubho cakkhū, ",
  "cp8:16.2": "attā na me na dessiyo; ",
  "cp8:16.3": "Sabbaññutaṁ piyaṁ mayhaṁ, ",
  "cp8:16.4": "tasmā cakkhuṁ adāsahan”ti. ",
  "cp8:17.1": "Sivirājacariyaṁ aṭṭhamaṁ. "
}