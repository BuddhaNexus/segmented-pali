{
  "anya-e0605n4:0": "Abhinīhāradīpanīgāthā",
  "anya-e0605n4:1": "13.",
  "anya-e0605n4:2": "Vadetha tassīdha anappakaṁ guṇaṁ,",
  "anya-e0605n4:3": "Na tena tulyo paramo ca vijjati;",
  "anya-e0605n4:4": "Kiṁ taṁ guṇaṁ taṁ sadisena dinnaṁ,",
  "anya-e0605n4:5": "Sayaṁkataṁ kinnu adhiccaladdhaṁ.",
  "anya-e0605n4:6": "14.",
  "anya-e0605n4:7": "Nādhiccaladdhaṁ na ca pubbabuddhā,",
  "anya-e0605n4:8": "Brahmādinaṁ sammutiyā bahūnaṁ;",
  "anya-e0605n4:9": "Sayaṁkateneva anopamena,",
  "anya-e0605n4:10": "Dānādinā laddhamidaṁ vipākaṁ.",
  "anya-e0605n4:11": "15.",
  "anya-e0605n4:12": "Ito catunnaṁ asaṅkhiyānaṁ,",
  "anya-e0605n4:13": "Sataṁsahassānadhikānamatthake;",
  "anya-e0605n4:14": "Kappe atītamhi sumedhatāpaso,",
  "anya-e0605n4:15": "Vehāyasaṁ gacchati iddhiyā tadā.",
  "anya-e0605n4:16": "16.",
  "anya-e0605n4:17": "Dipaṅkaro nāma jino sasaṅgho,",
  "anya-e0605n4:18": "Rammaṁ puraṁ yāti virocamāno;",
  "anya-e0605n4:19": "Manussadevehibhipūjiyanto,",
  "anya-e0605n4:20": "Sahassaraṁsi viya bhāṇumā nabhe.",
  "anya-e0605n4:21": "17.",
  "anya-e0605n4:22": "Tassañjasaṁ kātubahussahānaṁ,",
  "anya-e0605n4:23": "Buddhoti sutvā sumano patīto;",
  "anya-e0605n4:24": "Mamajja dehaṁ panimassa datvā,",
  "anya-e0605n4:25": "Buddho ahaṁ hessamanāgatediso.",
  "anya-e0605n4:26": "18.",
  "anya-e0605n4:27": "Tasmiñjase kandaratamhi paṅke,",
  "anya-e0605n4:28": "Katvāna setuṁ sayi so sadehaṁ;",
  "anya-e0605n4:29": "Buddho ayaṁ gacchatu piṭṭhiyā mamaṁ,",
  "anya-e0605n4:30": "Bodhissace hessati me anāgate.",
  "anya-e0605n4:31": "19.",
  "anya-e0605n4:32": "Ussīsakaṁ yāti jino hi tassa,",
  "anya-e0605n4:33": "Ajjhāsayo sijjhatimassanāgate;",
  "anya-e0605n4:34": "Ñatvāna byākāsi asesato hi,",
  "anya-e0605n4:35": "Buddho ayaṁ hessatināgatesu.",
  "anya-e0605n4:36": "20.",
  "anya-e0605n4:37": "Sutvāna patto va mahābhisekaṁ,",
  "anya-e0605n4:38": "Laddhaṁ va bodhiṁ samanussaranto;",
  "anya-e0605n4:39": "Pūjetvā yāte munidevamānuse,",
  "anya-e0605n4:40": "Uṭṭhāya so sammasi pāramī dasa.",
  "anya-e0605n4:41": "21.",
  "anya-e0605n4:42": "Daḷhaṁ gahetvā samatiṁsapāramī,",
  "anya-e0605n4:43": "Sikkhattayañcassa jinassa santike;",
  "anya-e0605n4:44": "Kātuṁ samattho pi bhavassa pāraṁ,",
  "anya-e0605n4:45": "Sattesu kāruññabalā bhavaṁ gato.",
  "anya-e0605n4:46": "22.",
  "anya-e0605n4:47": "Uppannuppannake so jinavaramatule pūjayitvā asesaṁ buddho eso hi oso bhavati niyamato byākato tehi tehi tesaṁ tesaṁ jinānaṁ acanamanupamaṁ pūjayitvā sirena,",
  "anya-e0605n4:48": "Taṁ taṁ dukkhaṁ sahitvā sakalaguṇadadaṁ pāramī pūrayittha."
}