{
  "snp3.8:0.1": "Sutta Nipāta 3.8 ",
  "snp3.8:0.2": "Sallasutta ",
  "snp3.8:1.1": "Animittamanaññātaṁ, ",
  "snp3.8:1.2": "maccānaṁ idha jīvitaṁ; ",
  "snp3.8:1.3": "Kasirañca parittañca, ",
  "snp3.8:1.4": "tañca dukkhena saṁyutaṁ. ",
  "snp3.8:2.1": "Na hi so upakkamo atthi, ",
  "snp3.8:2.2": "yena jātā na miyyare; ",
  "snp3.8:2.3": "Jarampi patvā maraṇaṁ, ",
  "snp3.8:2.4": "evaṁdhammā hi pāṇino. ",
  "snp3.8:3.1": "Phalānamiva pakkānaṁ, ",
  "snp3.8:3.2": "pāto patanato bhayaṁ; ",
  "snp3.8:3.3": "Evaṁ jātāna maccānaṁ, ",
  "snp3.8:3.4": "niccaṁ maraṇato bhayaṁ. ",
  "snp3.8:4.1": "Yathāpi kumbhakārassa, ",
  "snp3.8:4.2": "katā mattikabhājanā; ",
  "snp3.8:4.3": "Sabbe bhedanapariyantā, ",
  "snp3.8:4.4": "evaṁ maccāna jīvitaṁ. ",
  "snp3.8:5.1": "Daharā ca mahantā ca, ",
  "snp3.8:5.2": "ye bālā ye ca paṇḍitā; ",
  "snp3.8:5.3": "Sabbe maccuvasaṁ yanti, ",
  "snp3.8:5.4": "sabbe maccuparāyaṇā. ",
  "snp3.8:6.1": "Tesaṁ maccuparetānaṁ, ",
  "snp3.8:6.2": "gacchataṁ paralokato; ",
  "snp3.8:6.3": "Na pitā tāyate puttaṁ, ",
  "snp3.8:6.4": "ñātī vā pana ñātake. ",
  "snp3.8:7.1": "Pekkhataṁyeva ñātīnaṁ, ",
  "snp3.8:7.2": "passa lālapataṁ puthu; ",
  "snp3.8:7.3": "Ekamekova maccānaṁ, ",
  "snp3.8:7.4": "govajjho viya nīyati. ",
  "snp3.8:8.1": "Evamabbhāhato loko, ",
  "snp3.8:8.2": "Maccunā ca jarāya ca; ",
  "snp3.8:8.3": "Tasmā dhīrā na socanti, ",
  "snp3.8:8.4": "Viditvā lokapariyāyaṁ. ",
  "snp3.8:9.1": "Yassa maggaṁ na jānāsi, ",
  "snp3.8:9.2": "āgatassa gatassa vā; ",
  "snp3.8:9.3": "Ubho ante asampassaṁ, ",
  "snp3.8:9.4": "niratthaṁ paridevasi. ",
  "snp3.8:10.1": "Paridevayamāno ce, ",
  "snp3.8:10.2": "Kiñcidatthaṁ udabbahe; ",
  "snp3.8:10.3": "Sammūḷho hiṁsamattānaṁ, ",
  "snp3.8:10.4": "Kayirā ce naṁ vicakkhaṇo. ",
  "snp3.8:11.1": "Na hi ruṇṇena sokena, ",
  "snp3.8:11.2": "Santiṁ pappoti cetaso; ",
  "snp3.8:11.3": "Bhiyyassuppajjate dukkhaṁ, ",
  "snp3.8:11.4": "Sarīraṁ cupahaññati. ",
  "snp3.8:12.1": "Kiso vivaṇṇo bhavati, ",
  "snp3.8:12.2": "Hiṁsamattānamattanā; ",
  "snp3.8:12.3": "Na tena petā pālenti, ",
  "snp3.8:12.4": "Niratthā paridevanā. ",
  "snp3.8:13.1": "Sokamappajahaṁ jantu, ",
  "snp3.8:13.2": "Bhiyyo dukkhaṁ nigacchati; ",
  "snp3.8:13.3": "Anutthunanto kālaṅkataṁ, ",
  "snp3.8:13.4": "Sokassa vasamanvagū. ",
  "snp3.8:14.1": "Aññepi passa gamine, ",
  "snp3.8:14.2": "Yathākammupage nare; ",
  "snp3.8:14.3": "Maccuno vasamāgamma, ",
  "snp3.8:14.4": "Phandantevidha pāṇino. ",
  "snp3.8:15.1": "Yena yena hi maññanti, ",
  "snp3.8:15.2": "Tato taṁ hoti aññathā; ",
  "snp3.8:15.3": "Etādiso vinābhāvo, ",
  "snp3.8:15.4": "Passa lokassa pariyāyaṁ. ",
  "snp3.8:16.1": "Api vassasataṁ jīve, ",
  "snp3.8:16.2": "Bhiyyo vā pana māṇavo; ",
  "snp3.8:16.3": "Ñātisaṅghā vinā hoti, ",
  "snp3.8:16.4": "Jahāti idha jīvitaṁ. ",
  "snp3.8:17.1": "Tasmā arahato sutvā, ",
  "snp3.8:17.2": "Vineyya paridevitaṁ; ",
  "snp3.8:17.3": "Petaṁ kālaṅkataṁ disvā, ",
  "snp3.8:17.4": "Neso labbhā mayā iti. ",
  "snp3.8:18.1": "Yathā saraṇamādittaṁ, ",
  "snp3.8:18.2": "Vārinā parinibbaye; ",
  "snp3.8:18.3": "Evampi dhīro sapañño, ",
  "snp3.8:18.4": "Paṇḍito kusalo naro; ",
  "snp3.8:18.5": "Khippamuppatitaṁ sokaṁ, ",
  "snp3.8:18.6": "Vāto tūlaṁva dhaṁsaye. ",
  "snp3.8:19.1": "Paridevaṁ pajappañca, ",
  "snp3.8:19.2": "Domanassañca attano; ",
  "snp3.8:19.3": "Attano sukhamesāno, ",
  "snp3.8:19.4": "Abbahe sallamattano. ",
  "snp3.8:20.1": "Abbūḷhasallo asito, ",
  "snp3.8:20.2": "santiṁ pappuyya cetaso; ",
  "snp3.8:20.3": "Sabbasokaṁ atikkanto, ",
  "snp3.8:20.4": "asoko hoti nibbutoti. ",
  "snp3.8:20.5": "Sallasuttaṁ aṭṭhamaṁ. "
}