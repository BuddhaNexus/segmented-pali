{
  "anya-e0605n29:0": "Patthanādīpanīgāthā",
  "anya-e0605n29:1": "242.",
  "anya-e0605n29:2": " Asmiṁ ca pubbepi ca attabhāve,",
  "anya-e0605n29:3": "Sabbehi puññehi mayā katehi;",
  "anya-e0605n29:4": "Pūjāvidhānehi ca saññamehi,",
  "anya-e0605n29:5": "Bhave bhave pemaniyo bhaveyyaṁ.",
  "anya-e0605n29:6": "243.",
  "anya-e0605n29:7": " Saddhā hirottappabahussutattaṁ,",
  "anya-e0605n29:8": "Parakkamo ceva satissamādhi;",
  "anya-e0605n29:9": "Nibbedhabhāgī vajirūpamāti,",
  "anya-e0605n29:10": "Paññā ca me sijjhatu yāva bodhiṁ.",
  "anya-e0605n29:11": "244.",
  "anya-e0605n29:12": " Rāgañca dosañca pahāya mohaṁ,",
  "anya-e0605n29:13": "Diṭṭhiñca mānaṁ vicikicchitañca;",
  "anya-e0605n29:14": "Macchereissāmalavippahīno,",
  "anya-e0605n29:15": "Anuddhato accapalo bhaveyyaṁ.",
  "anya-e0605n29:16": "245.",
  "anya-e0605n29:17": " Bhaveyyahaṁ kenaci nappaseyho,",
  "anya-e0605n29:18": "Bhogo ca dinnehi paṭehi;",
  "anya-e0605n29:19": "Bhogo ca kāyo ca mamesa laddho,",
  "anya-e0605n29:20": "Parūpakārāya bhaveyyaṁ nūna.",
  "anya-e0605n29:21": "246.",
  "anya-e0605n29:22": " Dhammenā mālāpitaro bhareyyaṁ,",
  "anya-e0605n29:23": "Vuḍḍhapacāyī ca bahūpakārī;",
  "anya-e0605n29:24": "Ñātīsu mittesu sapattakesu,",
  "anya-e0605n29:25": "Vuḍḍhiṁ kareyyaṁ hitamattano ca.",
  "anya-e0605n29:26": "247.",
  "anya-e0605n29:27": " Metteyyanāthaṁ upasaṅkamitvā,",
  "anya-e0605n29:28": "Tassattabhāvaṁ abhipūjayitvā;",
  "anya-e0605n29:29": "Laddhāna veyyākaraṇaṁ anūnaṁ,",
  "anya-e0605n29:30": "Buddho ayaṁ hessatināgatesu.",
  "anya-e0605n29:31": "248.",
  "anya-e0605n29:32": " Lokena kenāpi anupalitto,",
  "anya-e0605n29:33": "Dāne rato sīlaguṇe susāṇṭhito;",
  "anya-e0605n29:34": "Nekkhammabhāgi varañāṇalābhī,",
  "anya-e0605n29:35": "Bhaveyyahaṁ thāmabalupapanno.",
  "anya-e0605n29:36": "249.",
  "anya-e0605n29:37": " Sīsaṁ samaṁsamaṁ mama hatthapāde,",
  "anya-e0605n29:38": "Saṁchinadamānepi kareyyakhantiṁ;",
  "anya-e0605n29:39": "Sacce ṭhito kālumadhiṭṭhite va,",
  "anya-e0605n29:40": "Mettāyupekkhāya yuto bhaveyyaṁ.",
  "anya-e0605n29:41": "250.",
  "anya-e0605n29:42": " Mahāpariccāgaṁ katvā pañca,",
  "anya-e0605n29:43": "Sambodhimaggaṁ avirādhayanto;",
  "anya-e0605n29:44": "Chetvā kilese citapañcamāro,",
  "anya-e0605n29:45": "Buddho bhavissāmi anāgatesu."
}