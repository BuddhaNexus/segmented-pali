{
  "cp6:0.1": "Cariyāpiṭaka ",
  "cp6:0.2": "Akittivagga ",
  "cp6:0.3": "Dānapāramī 6 ",
  "cp6:0.4": "Nimirājacariya ",
  "cp6:1.1": "“Punāparaṁ yadā homi, ",
  "cp6:1.2": "mithilāyaṁ puruttame; ",
  "cp6:1.3": "Nimi nāma mahārājā, ",
  "cp6:1.4": "paṇḍito kusalatthiko. ",
  "cp6:2.1": "Tadāhaṁ māpayitvāna, ",
  "cp6:2.2": "catussālaṁ catummukhaṁ; ",
  "cp6:2.3": "Tattha dānaṁ pavattesiṁ, ",
  "cp6:2.4": "migapakkhinarādinaṁ. ",
  "cp6:3.1": "Acchādanañca sayanaṁ, ",
  "cp6:3.2": "annaṁ pānañca bhojanaṁ; ",
  "cp6:3.3": "Abbocchinnaṁ karitvāna, ",
  "cp6:3.4": "mahādānaṁ pavattayiṁ. ",
  "cp6:4.1": "Yathāpi sevako sāmiṁ, ",
  "cp6:4.2": "dhanahetumupāgato; ",
  "cp6:4.3": "Kāyena vācā manasā, ",
  "cp6:4.4": "ārādhanīyamesati. ",
  "cp6:5.1": "Tathevāhaṁ sabbabhave, ",
  "cp6:5.2": "pariyesissāmi bodhijaṁ; ",
  "cp6:5.3": "Dānena satte tappetvā, ",
  "cp6:5.4": "icchāmi bodhimuttaman”ti. ",
  "cp6:6.1": "Nimirājacariyaṁ chaṭṭhaṁ. "
}