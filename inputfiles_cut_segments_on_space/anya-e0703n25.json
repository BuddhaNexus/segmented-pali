{
  "anya-e0703n25:0": "Chabbīsatima pariccheda",
  "anya-e0703n25:1": "Maricavaṭṭikavihāramaho",
  "anya-e0703n25:2": "1.",
  "anya-e0703n25:3": "Ekacchattaṁ karitvāna, laṁkārajjaṁ mahāyaso;",
  "anya-e0703n25:4": "Nānantaraṁ saṁvidahi, yodhānaṁ so yathārahaṁ.",
  "anya-e0703n25:5": "2.",
  "anya-e0703n25:6": "Theraputtābhayo yodho, diyyamānaṁ na icchitaṁ;",
  "anya-e0703n25:7": "Pucchitova kimatthanti, yuddhamatthīti abravi.",
  "anya-e0703n25:8": "3.",
  "anya-e0703n25:9": "Ekarajje kate yuddhaṁ, kināmattīti pucchito;",
  "anya-e0703n25:10": "Yuddhaṁ kilesa corehi, karissāmi sudujjayaṁ.",
  "anya-e0703n25:11": "4.",
  "anya-e0703n25:12": "Icceva māha taṁ rājā, punappunaṁ nisedhayi;",
  "anya-e0703n25:13": "Punappunaṁ soyācitvā, raññonuññāya pabbaji.",
  "anya-e0703n25:14": "5.",
  "anya-e0703n25:15": "Pabbajitvā ca kālena, arahattamapāpuṇi;",
  "anya-e0703n25:16": "Pañcakhīṇāsavasata-parivāerā ahosi ca.",
  "anya-e0703n25:17": "6.",
  "anya-e0703n25:18": "Chattamaṅgala sattāhe, gate gatabhayo’ bhayo;",
  "anya-e0703n25:19": "Rājā katā bhisekova, mahatā vibhavena so.",
  "anya-e0703n25:20": "7.",
  "anya-e0703n25:21": "Tissavāpi’magā kīḷa-vidhinā samalaṅka taṁ;",
  "anya-e0703n25:22": "Kīḷituṁ abhisittānaṁ, cārittañcā nurakkhituṁ.",
  "anya-e0703n25:23": "8.",
  "anya-e0703n25:24": "Rañño paricchadaṁ sabbaṁ, upāyanasatāni ca;",
  "anya-e0703n25:25": "Maricavaṭṭivihārassa, ṭhānamhi ṭhapayiṁsu ca.",
  "anya-e0703n25:26": "9.",
  "anya-e0703n25:27": "Tattheva thūpaṭhānamhi, sadhātuṁ kuntamuttamaṁ;",
  "anya-e0703n25:28": "Ṭhapesuṁ kuntadharakā, ujukaṁ rājamānusā.",
  "anya-e0703n25:29": "10.",
  "anya-e0703n25:30": "Sahorodho mahārājā, kīḷitvā salile divā;",
  "anya-e0703n25:31": "Sāyamāhaṁ gamissāma, kuntaṁ vaḍḍhetha bho”iti.",
  "anya-e0703n25:32": "11.",
  "anya-e0703n25:33": "Cāletuṁ taṁ na sakkhiṁsu, kuntaṁ rājādhikārikā;",
  "anya-e0703n25:34": "Gandhāmālāhi pūjesuṁ, rājasenāsamāgatā.",
  "anya-e0703n25:35": "12.",
  "anya-e0703n25:36": "Rājā mahantaṁ accheraṁ, disvā taṁ haṭṭhamānaso;",
  "anya-e0703n25:37": "Vidhāya tattha ārakkhaṁ, pavisitvā puraṁ tato.",
  "anya-e0703n25:38": "13.",
  "anya-e0703n25:39": "Kuntaṁ parikkhipāpetvā, cetiyaṁ tattha kārayi;",
  "anya-e0703n25:40": "Thūpaṁ parikkhipāpetvā, vihārañca akārayi.",
  "anya-e0703n25:41": "14.",
  "anya-e0703n25:42": "Tīhi vassehi niṭhāsi, vihāro so narissaro;",
  "anya-e0703n25:43": "Saṅghaṁ sasannipātesi, viharamahākāraṇā.",
  "anya-e0703n25:44": "15.",
  "anya-e0703n25:45": "Bhikkhunaṁ satasahassāni, tadā bhikkhuniyo pana;",
  "anya-e0703n25:46": "Navuti ca sahassāni, abhaviṁsu samāgatā.",
  "anya-e0703n25:47": "16.",
  "anya-e0703n25:48": "Tasmiṁ samāgame saṅghaṁ, idamāka mahīpati;",
  "anya-e0703n25:49": "“Saṅghaṁ bhante visaritvā, bhuñjiṁ maricavaṭṭikaṁ.",
  "anya-e0703n25:50": "17.",
  "anya-e0703n25:51": "Hasse’taṁ daṇḍakammaṁ me, bhavatūti akārayi;",
  "anya-e0703n25:52": "Sacetiyaṁ maricavaṭṭi-vihāraṁ sumanoharaṁ.",
  "anya-e0703n25:53": "18.",
  "anya-e0703n25:54": "Patiggaṇhātu taṁ saṅgho, iti so dakkhiṇodakaṁ;",
  "anya-e0703n25:55": "Pātitvā bhikkhusaṅghassa, vihāraṁ sumano adā.",
  "anya-e0703n25:56": "19.",
  "anya-e0703n25:57": "Vihāre taṁ samantāpi, mahantaṁ maṇḍapaṁ subhaṁ;",
  "anya-e0703n25:58": "Kāretvā tattha saṅghassa, mahādānaṁ pavattayi.",
  "anya-e0703n25:59": "20.",
  "anya-e0703n25:60": "Pāde patiṭṭhāpetvāpi,",
  "anya-e0703n25:61": "Jale abhayavāpiyā;",
  "anya-e0703n25:62": "Kato so maṇḍapo āsi,",
  "anya-e0703n25:63": "Seso kāse kathāvakā.",
  "anya-e0703n25:64": "21.",
  "anya-e0703n25:65": "Sattāhaṁ annapānādiṁ, datvāna manujādhipo;",
  "anya-e0703n25:66": "Adā sāmaṇakaṁ sabbaṁ, parikkhāraṁ mahārahaṁ.",
  "anya-e0703n25:67": "22.",
  "anya-e0703n25:68": "Ahu satasahassaggho, parikkhāro sa ādiko;",
  "anya-e0703n25:69": "Ante sahassagghanako, sabba saṅgho ca taṁlabhi.",
  "anya-e0703n25:70": "23.",
  "anya-e0703n25:71": "Yuddhe dāne ca sūrena, sūrinā ratanattaye;",
  "anya-e0703n25:72": "Pasannāmalacittena, sāsanujota natthinā.",
  "anya-e0703n25:73": "24.",
  "anya-e0703n25:74": "Raññā kataññunā tena, thūpakārāpanādito;",
  "anya-e0703n25:75": "Vihāra mahanantāni, pūjetuṁ ratanattayaṁ.",
  "anya-e0703n25:76": "25.",
  "anya-e0703n25:77": "Pariccattadhanāne’ttha, anagghāni vimuñciya;",
  "anya-e0703n25:78": "Sesāni honti ekāya, ūnavīsatikoṭiyo.",
  "anya-e0703n25:79": "26.",
  "anya-e0703n25:80": "Togā dasaddhavidha dosavidūsitāpi,",
  "anya-e0703n25:81": "Paññāvisesa sahitehi janehi pattā;",
  "anya-e0703n25:82": "Honteva pañcaguṇayoga gahitasāraṁ,",
  "anya-e0703n25:83": "Iccassa sāragahaṇe matimāyateyyāti.",
  "anya-e0703n25:84": "Sujanappasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n25:85": "Maricavaṭṭikavihāramahonāma",
  "anya-e0703n25:86": "Chabbīsatimo paricchedo."
}