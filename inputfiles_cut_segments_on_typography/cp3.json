{
  "cp3:0.1_0": "Cariyāpiṭaka",
  "cp3:0.2_0": "Akittivagga",
  "cp3:0.3_0": "Dānapāramī 3",
  "cp3:0.4_0": "Kururājacariya",
  "cp3:1.1_0": "“Punāparaṁ yadā homi,",
  "cp3:1.2_0": "indapatthe puruttame;",
  "cp3:1.3_0": "Rājā dhanañcayo nāma,",
  "cp3:1.4_0": "kusale dasahupāgato.",
  "cp3:2.1_0": "Kaliṅgaraṭṭhavisayā,",
  "cp3:2.2_0": "brāhmaṇā upagañchu maṁ;",
  "cp3:2.3_0": "Āyācuṁ maṁ hatthināgaṁ,",
  "cp3:2.4_0": "dhaññaṁ maṅgalasammataṁ.",
  "cp3:3.1_0": "‘Avuṭṭhiko janapado,",
  "cp3:3.2_0": "dubbhikkho chātako mahā;",
  "cp3:3.3_0": "Dadāhi pavaraṁ nāgaṁ,",
  "cp3:3.4_0": "nīlaṁ añjanasavhayaṁ’.",
  "cp3:4.1_0": "‘Na me yācakamanuppatte,",
  "cp3:4.2_0": "paṭikkhepo anucchavo;",
  "cp3:4.3_0": "Mā me bhijji samādānaṁ,",
  "cp3:4.4_0": "dassāmi vipulaṁ gajaṁ’.",
  "cp3:5.1_0": "Nāgaṁ gahetvā soṇḍāya,",
  "cp3:5.2_0": "bhiṅgāre ratanāmaye;",
  "cp3:5.3_0": "Jalaṁ hatthe ākiritvā,",
  "cp3:5.4_0": "brāhmaṇānaṁ adaṁ gajaṁ.",
  "cp3:6.1_0": "Tassa nāge padinnamhi,",
  "cp3:6.2_0": "amaccā etadabravuṁ;",
  "cp3:6.3_0": "‘Kiṁ nu tuyhaṁ varaṁ nāgaṁ,",
  "cp3:6.4_0": "yācakānaṁ padassasi.",
  "cp3:7.1_0": "Dhaññaṁ maṅgalasampannaṁ,",
  "cp3:7.2_0": "saṅgāmavijayuttamaṁ;",
  "cp3:7.3_0": "Tasmiṁ nāge padinnamhi,",
  "cp3:7.4_0": "kiṁ te rajjaṁ karissati’.",
  "cp3:8.1_0": "‘Rajjampi me dade sabbaṁ,",
  "cp3:8.2_0": "sarīraṁ dajjamattano;",
  "cp3:8.3_0": "Sabbaññutaṁ piyaṁ mayhaṁ,",
  "cp3:8.4_0": "tasmā nāgaṁ adāsahan’”ti.",
  "cp3:9.1_0": "Kururājacariyaṁ tatiyaṁ."
}