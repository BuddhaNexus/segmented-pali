{
  "thig1.18:0.1_0": "Therīgāthā 1.18",
  "thig1.18:0.2_0": "Ekakanipāta",
  "thig1.18:0.3_0": "Saṅghātherīgāthā",
  "thig1.18:1.1_0": "“Hitvā ghare pabbajitvā,",
  "thig1.18:1.2_0": "hitvā puttaṁ pasuṁ piyaṁ;",
  "thig1.18:1.3_0": "Hitvā rāgañca dosañca,",
  "thig1.18:1.4_0": "avijjañca virājiya;",
  "thig1.18:1.5_0": "Samūlaṁ taṇhamabbuyha,",
  "thig1.18:1.6_0": "upasantāmhi nibbutā”ti.",
  "thig1.18:2.1_0": "… Saṅghā therī ….",
  "thig1.18:3.1_0": "Ekakanipāto niṭṭhito."
}