{
  "thag6.7:0.1_0": "Theragāthā 6.7",
  "thag6.7:0.2_0": "Chakkanipāta",
  "thag6.7:0.3_0": "Paṭhamavagga",
  "thag6.7:0.4_0": "Kātiyānattheragāthā",
  "thag6.7:1.1_0": "“Uṭṭhehi nisīda kātiyāna,",
  "thag6.7:1.2_0": "Mā niddābahulo ahu jāgarassu;",
  "thag6.7:1.3_0": "Mā taṁ alasaṁ pamattabandhu,",
  "thag6.7:1.4_0": "Kūṭeneva jinātu maccurājā.",
  "thag6.7:2.1_0": "Seyyathāpi mahāsamuddavego,",
  "thag6.7:2.2_0": "Evaṁ jātijarātivattate taṁ;",
  "thag6.7:2.3_0": "So karohi sudīpamattano tvaṁ,",
  "thag6.7:2.4_0": "Na hi tāṇaṁ tava vijjateva aññaṁ.",
  "thag6.7:3.1_0": "Satthā hi vijesi maggametaṁ,",
  "thag6.7:3.2_0": "Saṅgā jātijarābhayā atītaṁ;",
  "thag6.7:3.3_0": "Pubbāpararattamappamatto,",
  "thag6.7:3.4_0": "Anuyuñjassu daḷhaṁ karohi yogaṁ.",
  "thag6.7:4.1_0": "Purimāni pamuñca bandhanāni,",
  "thag6.7:4.2_0": "Saṅghāṭikhuramuṇḍabhikkhabhojī;",
  "thag6.7:4.3_0": "Mā khiḍḍāratiñca mā niddaṁ,",
  "thag6.7:4.4_0": "Anuyuñjittha jhāya kātiyāna.",
  "thag6.7:5.1_0": "Jhāyāhi jināhi kātiyāna,",
  "thag6.7:5.2_0": "Yogakkhemapathesu kovidosi;",
  "thag6.7:5.3_0": "Pappuyya anuttaraṁ visuddhiṁ,",
  "thag6.7:5.4_0": "Parinibbāhisi vārināva joti.",
  "thag6.7:6.1_0": "Pajjotakaro parittaraṁso,",
  "thag6.7:6.2_0": "Vātena vinamyate latāva;",
  "thag6.7:6.3_0": "Evampi tuvaṁ anādiyāno,",
  "thag6.7:6.4_0": "Māraṁ indasagotta niddhunāhi;",
  "thag6.7:6.5_0": "So vedayitāsu vītarāgo,",
  "thag6.7:6.6_0": "Kālaṁ kaṅkha idheva sītibhūto”ti.",
  "thag6.7:6.7_0": "… Kātiyāno thero …."
}