{
  "tha-ap538:0.1_0": "Therāpadāna",
  "tha-ap538:0.2_0": "Kaccāyanavagga",
  "tha-ap538:0.3_0": "6. Bāhiyattheraapadāna",
  "tha-ap538:1.1_0": "“Ito satasahassamhi,",
  "tha-ap538:1.2_0": "kappe uppajji nāyako;",
  "tha-ap538:1.3_0": "Mahappabho tilokaggo,",
  "tha-ap538:1.4_0": "nāmena padumuttaro.",
  "tha-ap538:2.1_0": "Khippābhiññassa bhikkhussa,",
  "tha-ap538:2.2_0": "guṇaṁ kittayato mune;",
  "tha-ap538:2.3_0": "Sutvā udaggacittohaṁ,",
  "tha-ap538:2.4_0": "kāraṁ katvā mahesino.",
  "tha-ap538:3.1_0": "Datvā sattāhikaṁ dānaṁ,",
  "tha-ap538:3.2_0": "sasissassa mune ahaṁ;",
  "tha-ap538:3.3_0": "Abhivādiya sambuddhaṁ,",
  "tha-ap538:3.4_0": "taṁ ṭhānaṁ patthayiṁ tadā.",
  "tha-ap538:4.1_0": "Tato maṁ byākari buddho,",
  "tha-ap538:4.2_0": "‘etaṁ passatha brāhmaṇaṁ;",
  "tha-ap538:4.3_0": "Patitaṁ pādamūle me,",
  "tha-ap538:4.4_0": "cariyaṁ paccavekkhaṇaṁ.",
  "tha-ap538:5.1_0": "Hemayaññopacitaṅgaṁ,",
  "tha-ap538:5.2_0": "avadātatanuttacaṁ;",
  "tha-ap538:5.3_0": "Palambabimbatamboṭṭhaṁ,",
  "tha-ap538:5.4_0": "setatiṇhasamaṁ dijaṁ.",
  "tha-ap538:6.1_0": "Guṇathāmabahutaraṁ,",
  "tha-ap538:6.2_0": "samuggatatanūruhaṁ;",
  "tha-ap538:6.3_0": "Guṇoghāyatanībhūtaṁ,",
  "tha-ap538:6.4_0": "pītisamphullitānanaṁ.",
  "tha-ap538:7.1_0": "Eso patthayate ṭhānaṁ,",
  "tha-ap538:7.2_0": "khippābhiññassa bhikkhuno;",
  "tha-ap538:7.3_0": "Anāgate mahāvīro,",
  "tha-ap538:7.4_0": "gotamo nāma hessati.",
  "tha-ap538:8.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap538:8.2_0": "oraso dhammanimmito;",
  "tha-ap538:8.3_0": "Bāhiyo nāma nāmena,",
  "tha-ap538:8.4_0": "hessati satthu sāvako’.",
  "tha-ap538:9.1_0": "Tadā hi tuṭṭho vuṭṭhāya,",
  "tha-ap538:9.2_0": "yāvajīvaṁ mahāmune;",
  "tha-ap538:9.3_0": "Kāraṁ katvā cuto saggaṁ,",
  "tha-ap538:9.4_0": "agaṁ sabhavanaṁ yathā.",
  "tha-ap538:10.1_0": "Devabhūto manusso vā,",
  "tha-ap538:10.2_0": "sukhito tassa kammuno;",
  "tha-ap538:10.3_0": "Vāhasā saṁsaritvāna,",
  "tha-ap538:10.4_0": "sampattimanubhomahaṁ.",
  "tha-ap538:11.1_0": "Puna kassapavīrassa,",
  "tha-ap538:11.2_0": "atthamentamhi sāsane;",
  "tha-ap538:11.3_0": "Āruyha selasikharaṁ,",
  "tha-ap538:11.4_0": "yuñjitvā jinasāsanaṁ.",
  "tha-ap538:12.1_0": "Visuddhasīlo sappañño,",
  "tha-ap538:12.2_0": "jinasāsanakārako;",
  "tha-ap538:12.3_0": "Tato cutā pañca janā,",
  "tha-ap538:12.4_0": "devalokaṁ agamhase.",
  "tha-ap538:13.1_0": "Tatohaṁ bāhiyo jāto,",
  "tha-ap538:13.2_0": "bhārukacche puruttame;",
  "tha-ap538:13.3_0": "Tato nāvāya pakkhando,",
  "tha-ap538:13.4_0": "sāgaraṁ appasiddhiyaṁ.",
  "tha-ap538:14.1_0": "Tato nāvā abhijjittha,",
  "tha-ap538:14.2_0": "gantvāna katipāhakaṁ;",
  "tha-ap538:14.3_0": "Tadā bhīsanake ghore,",
  "tha-ap538:14.4_0": "patito makarākare.",
  "tha-ap538:15.1_0": "Tadāhaṁ vāyamitvāna,",
  "tha-ap538:15.2_0": "santaritvā mahodadhiṁ;",
  "tha-ap538:15.3_0": "Suppārapaṭṭanavaraṁ,",
  "tha-ap538:15.4_0": "sampatto mandavedhito.",
  "tha-ap538:16.1_0": "Dārucīraṁ nivāsetvā,",
  "tha-ap538:16.2_0": "gāmaṁ piṇḍāya pāvisiṁ;",
  "tha-ap538:16.3_0": "Tadāha so jano tuṭṭho,",
  "tha-ap538:16.4_0": "‘arahāyamidhāgato.",
  "tha-ap538:17.1_0": "Imaṁ annena pānena,",
  "tha-ap538:17.2_0": "vatthena sayanena ca;",
  "tha-ap538:17.3_0": "Bhesajjena ca sakkatvā,",
  "tha-ap538:17.4_0": "hessāma sukhitā mayaṁ’.",
  "tha-ap538:18.1_0": "Paccayānaṁ tadā lābhī,",
  "tha-ap538:18.2_0": "tehi sakkatapūjito;",
  "tha-ap538:18.3_0": "Arahāhanti saṅkappaṁ,",
  "tha-ap538:18.4_0": "uppādesiṁ ayoniso.",
  "tha-ap538:19.1_0": "Tato me cittamaññāya,",
  "tha-ap538:19.2_0": "codayī pubbadevatā;",
  "tha-ap538:19.3_0": "‘Na tvaṁ upāyamaggaññū,",
  "tha-ap538:19.4_0": "kuto tvaṁ arahā bhave’.",
  "tha-ap538:20.1_0": "Codito tāya saṁviggo,",
  "tha-ap538:20.2_0": "tadāhaṁ paripucchi taṁ;",
  "tha-ap538:20.3_0": "‘Ke vā ete kuhiṁ loke,",
  "tha-ap538:20.4_0": "arahanto naruttamā’.",
  "tha-ap538:21.1_0": "‘Sāvatthiyaṁ kosalamandire jino,",
  "tha-ap538:21.2_0": "Pahūtapañño varabhūrimedhaso;",
  "tha-ap538:21.3_0": "So sakyaputto arahā anāsavo,",
  "tha-ap538:21.4_0": "Deseti dhammaṁ arahattapattiyā’.",
  "tha-ap538:22.1_0": "Tadassa sutvā vacanaṁ supīṇito,",
  "tha-ap538:22.2_0": "Nidhiṁva laddhā kapaṇoti vimhito;",
  "tha-ap538:22.3_0": "Udaggacitto arahattamuttamaṁ,",
  "tha-ap538:22.4_0": "Sudassanaṁ daṭṭhumanantagocaraṁ.",
  "tha-ap538:23.1_0": "Tadā tato nikkhamitvāna ‘satthuno,",
  "tha-ap538:23.2_0": "Sadā jinaṁ passāmi vimalānanaṁ’;",
  "tha-ap538:23.3_0": "Upecca rammaṁ vijitavhayaṁ vanaṁ,",
  "tha-ap538:23.4_0": "Dije apucchiṁ ‘kuhiṁ lokanandano’.",
  "tha-ap538:24.1_0": "‘Tato avocuṁ naradevavandito,",
  "tha-ap538:24.2_0": "Puraṁ paviṭṭho asanesanāya so;",
  "tha-ap538:24.3_0": "Sasova khippaṁ munidassanussuko,",
  "tha-ap538:24.4_0": "Upecca vandāhi tamaggapuggalaṁ’.",
  "tha-ap538:25.1_0": "Tatohaṁ tuvaṭaṁ gantvā,",
  "tha-ap538:25.2_0": "sāvatthiṁ puramuttamaṁ;",
  "tha-ap538:25.3_0": "Vicarantaṁ tamaddakkhiṁ,",
  "tha-ap538:25.4_0": "piṇḍatthaṁ apihāgidhaṁ.",
  "tha-ap538:26.1_0": "Pattapāṇiṁ alolakkhaṁ,",
  "tha-ap538:26.2_0": "pācayantaṁ pītākaraṁ;",
  "tha-ap538:26.3_0": "Sirīnilayasaṅkāsaṁ,",
  "tha-ap538:26.4_0": "ravidittiharānanaṁ.",
  "tha-ap538:27.1_0": "Taṁ samecca nipaccāhaṁ,",
  "tha-ap538:27.2_0": "idaṁ vacanamabraviṁ;",
  "tha-ap538:27.3_0": "‘Kupathe vippanaṭṭhassa,",
  "tha-ap538:27.4_0": "saraṇaṁ hohi gotama’.",
  "tha-ap538:28.1_0": "‘Pāṇasantāraṇatthāya,",
  "tha-ap538:28.2_0": "piṇḍāya vicarāmahaṁ;",
  "tha-ap538:28.3_0": "Na te dhammakathākālo’,",
  "tha-ap538:28.4_0": "iccāha munisattamo.",
  "tha-ap538:29.1_0": "Tadā punappunaṁ buddhaṁ,",
  "tha-ap538:29.2_0": "āyāciṁ dhammalālaso;",
  "tha-ap538:29.3_0": "Yo me dhammamadesesi,",
  "tha-ap538:29.4_0": "gambhīraṁ suññataṁ padaṁ.",
  "tha-ap538:30.1_0": "Tassa dhammaṁ suṇitvāna,",
  "tha-ap538:30.2_0": "pāpuṇiṁ āsavakkhayaṁ;",
  "tha-ap538:30.3_0": "Parikkhīṇāyuko santo,",
  "tha-ap538:30.4_0": "aho satthānukampako.",
  "tha-ap538:31.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap538:31.2_0": "…pe…",
  "tha-ap538:31.3_0": "viharāmi anāsavo.",
  "tha-ap538:32.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap538:32.2_0": "…pe…",
  "tha-ap538:32.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap538:33.1_0": "Paṭisambhidā catasso,",
  "tha-ap538:33.2_0": "…pe…",
  "tha-ap538:33.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap538:34.1_0": "Evaṁ thero viyākāsi,",
  "tha-ap538:34.2_0": "bāhiyo dārucīriyo;",
  "tha-ap538:34.3_0": "Saṅkārakūṭe patito,",
  "tha-ap538:34.4_0": "bhūtāviṭṭhāya gāviyā.",
  "tha-ap538:35.1_0": "Attano pubbacariyaṁ,",
  "tha-ap538:35.2_0": "kittayitvā mahāmati;",
  "tha-ap538:35.3_0": "Parinibbāyi so thero,",
  "tha-ap538:35.4_0": "sāvatthiyaṁ puruttame.",
  "tha-ap538:36.1_0": "Nagarā nikkhamanto taṁ,",
  "tha-ap538:36.2_0": "disvāna isisattamo;",
  "tha-ap538:36.3_0": "Dārucīradharaṁ dhīraṁ,",
  "tha-ap538:36.4_0": "bāhiyaṁ bāhitāgamaṁ.",
  "tha-ap538:37.1_0": "Bhūmiyaṁ patitaṁ dantaṁ,",
  "tha-ap538:37.2_0": "indaketūva pātitaṁ;",
  "tha-ap538:37.3_0": "Gatāyuṁ sukkhakilesaṁ,",
  "tha-ap538:37.4_0": "jinasāsanakārakaṁ.",
  "tha-ap538:38.1_0": "Tato āmantayī satthā,",
  "tha-ap538:38.2_0": "sāvake sāsane rate;",
  "tha-ap538:38.3_0": "‘Gaṇhatha netvā jhāpetha,",
  "tha-ap538:38.4_0": "tanuṁ sabrahmacārino.",
  "tha-ap538:39.1_0": "Thūpaṁ karotha pūjetha,",
  "tha-ap538:39.2_0": "nibbuto so mahāmati;",
  "tha-ap538:39.3_0": "Khippābhiññānamesaggo,",
  "tha-ap538:39.4_0": "sāvako me vacokaro.",
  "tha-ap538:40.1_0": "Sahassamapi ce gāthā,",
  "tha-ap538:40.2_0": "anatthapadasañhitā;",
  "tha-ap538:40.3_0": "Ekaṁ gāthāpadaṁ seyyo,",
  "tha-ap538:40.4_0": "yaṁ sutvā upasammati.",
  "tha-ap538:41.1_0": "Yattha āpo ca pathavī,",
  "tha-ap538:41.2_0": "tejo vāyo na gādhati;",
  "tha-ap538:41.3_0": "Na tattha sukkā jotanti,",
  "tha-ap538:41.4_0": "ādicco na pakāsati.",
  "tha-ap538:42.1_0": "Na tattha candimā bhāti,",
  "tha-ap538:42.2_0": "tamo tattha na vijjati;",
  "tha-ap538:42.3_0": "Yadā ca attanā vedi,",
  "tha-ap538:42.4_0": "munimonena brāhmaṇo.",
  "tha-ap538:43.1_0": "Atha rūpā arūpā ca,",
  "tha-ap538:43.2_0": "sukhadukkhā vimuccati’;",
  "tha-ap538:43.3_0": "Iccevaṁ abhaṇī nātho,",
  "tha-ap538:43.4_0": "tilokasaraṇo muni”.",
  "tha-ap538:44.1_0": "Itthaṁ sudaṁ āyasmā bāhiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap538:45.1_0": "Bāhiyattherassāpadānaṁ chaṭṭhaṁ."
}