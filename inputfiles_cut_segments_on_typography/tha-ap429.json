{
  "tha-ap429:0.1_0": "Therāpadāna",
  "tha-ap429:0.2_0": "Sakiṁsammajjakavagga",
  "tha-ap429:0.3_0": "7 Ekadhammassavaniyattheraapadāna",
  "tha-ap429:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap429:1.2_0": "sabbadhammāna pāragū;",
  "tha-ap429:1.3_0": "Catusaccaṁ pakāsento,",
  "tha-ap429:1.4_0": "santāresi bahuṁ janaṁ.",
  "tha-ap429:2.1_0": "Ahaṁ tena samayena,",
  "tha-ap429:2.2_0": "jaṭilo uggatāpano;",
  "tha-ap429:2.3_0": "Dhunanto vākacīrāni,",
  "tha-ap429:2.4_0": "gacchāmi ambare tadā.",
  "tha-ap429:3.1_0": "Buddhaseṭṭhassa upari,",
  "tha-ap429:3.2_0": "gantuṁ na visahāmahaṁ;",
  "tha-ap429:3.3_0": "Pakkhīva selamāsajja,",
  "tha-ap429:3.4_0": "gamanaṁ na labhāmahaṁ.",
  "tha-ap429:4.1_0": "Udake vokkamitvāna,",
  "tha-ap429:4.2_0": "evaṁ gacchāmi ambare;",
  "tha-ap429:4.3_0": "Na me idaṁ bhūtapubbaṁ,",
  "tha-ap429:4.4_0": "iriyāpathavikopanaṁ.",
  "tha-ap429:5.1_0": "Handa metaṁ gavesissaṁ,",
  "tha-ap429:5.2_0": "appevatthaṁ labheyyahaṁ;",
  "tha-ap429:5.3_0": "Orohanto antalikkhā,",
  "tha-ap429:5.4_0": "saddamassosi satthuno.",
  "tha-ap429:6.1_0": "Sarena rajanīyena,",
  "tha-ap429:6.2_0": "savanīyena vaggunā;",
  "tha-ap429:6.3_0": "Aniccataṁ kathentassa,",
  "tha-ap429:6.4_0": "taññeva uggahiṁ tadā;",
  "tha-ap429:6.5_0": "Aniccasaññamuggayha,",
  "tha-ap429:6.6_0": "agamāsiṁ mamassamaṁ.",
  "tha-ap429:7.1_0": "Yāvatāyuṁ vasitvāna,",
  "tha-ap429:7.2_0": "tattha kālaṅkato ahaṁ;",
  "tha-ap429:7.3_0": "Carime vattamānamhi,",
  "tha-ap429:7.4_0": "saddhammassavanaṁ sariṁ.",
  "tha-ap429:8.1_0": "Tena kammena sukatena,",
  "tha-ap429:8.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap429:8.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap429:8.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap429:9.1_0": "Tiṁsakappasahassāni,",
  "tha-ap429:9.2_0": "devaloke ramiṁ ahaṁ;",
  "tha-ap429:9.3_0": "Ekapaññāsakkhattuñca,",
  "tha-ap429:9.4_0": "devarajjamakārayiṁ.",
  "tha-ap429:10.1_0": "Ekavīsatikkhattuñca,",
  "tha-ap429:10.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap429:10.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap429:10.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap429:11.1_0": "Anubhomi sakaṁ puññaṁ,",
  "tha-ap429:11.2_0": "sukhitohaṁ bhavābhave;",
  "tha-ap429:11.3_0": "Anussarāmi taṁ saññaṁ,",
  "tha-ap429:11.4_0": "saṁsaranto bhavābhave;",
  "tha-ap429:11.5_0": "Na koṭiṁ paṭivijjhāmi,",
  "tha-ap429:11.6_0": "nibbānaṁ accutaṁ padaṁ.",
  "tha-ap429:12.1_0": "Pitugehe nisīditvā,",
  "tha-ap429:12.2_0": "samaṇo bhāvitindriyo;",
  "tha-ap429:12.3_0": "Kathaṁsa paridīpento,",
  "tha-ap429:12.4_0": "aniccatamudāhari.",
  "tha-ap429:13.1_0": "‘Aniccā vata saṅkhārā,",
  "tha-ap429:13.2_0": "uppādavayadhammino;",
  "tha-ap429:13.3_0": "Uppajjitvā nirujjhanti,",
  "tha-ap429:13.4_0": "tesaṁ vūpasamo sukho’.",
  "tha-ap429:14.1_0": "Saha gāthaṁ suṇitvāna,",
  "tha-ap429:14.2_0": "pubbasaññamanussariṁ;",
  "tha-ap429:14.3_0": "Ekāsane nisīditvā,",
  "tha-ap429:14.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap429:15.1_0": "Jātiyā sattavassena,",
  "tha-ap429:15.2_0": "arahattamapāpuṇiṁ;",
  "tha-ap429:15.3_0": "Upasampādayī buddho,",
  "tha-ap429:15.4_0": "dhammassavanassidaṁ phalaṁ.",
  "tha-ap429:16.1_0": "Satasahassito kappe,",
  "tha-ap429:16.2_0": "yaṁ dhammamasuṇiṁ tadā;",
  "tha-ap429:16.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap429:16.4_0": "dhammassavanassidaṁ phalaṁ.",
  "tha-ap429:17.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap429:17.2_0": "…pe…",
  "tha-ap429:17.3_0": "viharāmi anāsavo.",
  "tha-ap429:18.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap429:18.2_0": "…pe…",
  "tha-ap429:18.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap429:19.1_0": "Paṭisambhidā catasso,",
  "tha-ap429:19.2_0": "…pe…",
  "tha-ap429:19.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap429:20.1_0": "Itthaṁ sudaṁ āyasmā ekadhammassavaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap429:21.1_0": "Ekadhammassavaniyattherassāpadānaṁ sattamaṁ."
}