{
  "thag2.40:0.1_0": "Theragāthā 2.40",
  "thag2.40:0.2_0": "Dukanipāta",
  "thag2.40:0.3_0": "Catutthavagga",
  "thag2.40:0.4_0": "Kappaṭakurattheragāthā",
  "thag2.40:1.1_0": "“Ayamiti kappaṭo kappaṭakuro,",
  "thag2.40:1.2_0": "Acchāya atibharitāya;",
  "thag2.40:1.3_0": "Amataghaṭikāyaṁ dhammakaṭamatto,",
  "thag2.40:1.4_0": "Katapadaṁ jhānāni ocetuṁ.",
  "thag2.40:2.1_0": "Mā kho tvaṁ kappaṭa pacālesi,",
  "thag2.40:2.2_0": "Mā tvaṁ upakaṇṇamhi tāḷessaṁ;",
  "thag2.40:2.3_0": "Na hi tvaṁ kappaṭa mattamaññāsi,",
  "thag2.40:2.4_0": "Saṅghamajjhamhi pacalāyamāno”ti.",
  "thag2.40:2.5_0": "… Kappaṭakuro thero …",
  "thag2.40:2.6_0": "vaggo catuttho.",
  "thag2.40:3.0_0": "Tassuddānaṁ",
  "thag2.40:3.1_0": "Migasiro sivako ca,",
  "thag2.40:3.2_0": "upavāṇo ca paṇḍito;",
  "thag2.40:3.3_0": "Isidinno ca kaccāno,",
  "thag2.40:3.4_0": "nitako ca mahāvasī;",
  "thag2.40:3.5_0": "Poṭiriyaputto nisabho,",
  "thag2.40:3.6_0": "usabho kappaṭakuroti."
}