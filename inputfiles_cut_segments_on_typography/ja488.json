{
  "ja488:0.1_0": "Jātaka",
  "ja488:0.2_0": "Pakiṇṇakanipāta",
  "ja488:0.3_0": "Sālikedāravagga",
  "ja488:0.4_0": "5. Bhisajātaka",
  "ja488:1.1_0": "“Assaṁ gavaṁ rajataṁ jātarūpaṁ,",
  "ja488:1.2_0": "Bhariyañca so idha labhataṁ manāpaṁ;",
  "ja488:1.3_0": "Puttehi dārehi samaṅgi hotu,",
  "ja488:1.4_0": "Bhisāni te brāhmaṇa yo ahāsi”.",
  "ja488:2.1_0": "“Mālañca so kāsikacandanañca,",
  "ja488:2.2_0": "Dhāretu puttassa bahū bhavantu;",
  "ja488:2.3_0": "Kāmesu tibbaṁ kurutaṁ apekkhaṁ,",
  "ja488:2.4_0": "Bhisāni te brāhmaṇa yo ahāsi”.",
  "ja488:3.1_0": "“Pahūtadhañño kasimā yasassī,",
  "ja488:3.2_0": "Putte gihī dhanimā sabbakāme;",
  "ja488:3.3_0": "Vayaṁ apassaṁ gharamāvasātu,",
  "ja488:3.4_0": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:4.1_0": "So khattiyo hotu pasayhakārī,",
  "ja488:4.2_0": "Rājābhirājā balavā yasassī;",
  "ja488:4.3_0": "Sa cāturantaṁ mahimāvasātu,",
  "ja488:4.4_0": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:5.1_0": "So brāhmaṇo hotu avītarāgo,",
  "ja488:5.2_0": "Muhuttanakkhattapathesu yutto;",
  "ja488:5.3_0": "Pūjetu naṁ raṭṭhapatī yasassī,",
  "ja488:5.4_0": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:6.1_0": "Ajjhāyakaṁ sabbasamantavedaṁ,",
  "ja488:6.2_0": "Tapassīnaṁ maññatu sabbaloko;",
  "ja488:6.3_0": "Pūjentu naṁ jānapadā samecca,",
  "ja488:6.4_0": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:7.1_0": "Catussadaṁ gāmavaraṁ samiddhaṁ,",
  "ja488:7.2_0": "Dinnañhi so bhuñjatu vāsavena;",
  "ja488:7.3_0": "Avītarāgo maraṇaṁ upetu,",
  "ja488:7.4_0": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:8.1_0": "So gāmaṇī hotu sahāyamajjhe,",
  "ja488:8.2_0": "Naccehi gītehi pamodamāno;",
  "ja488:8.3_0": "So rājato byasana mālattha kiñci,",
  "ja488:8.4_0": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:9.1_0": "Yaṁ ekarājā pathaviṁ vijetvā,",
  "ja488:9.2_0": "Itthīsahassāna ṭhapetu aggaṁ;",
  "ja488:9.3_0": "Sīmantinīnaṁ pavarā bhavātu,",
  "ja488:9.4_0": "Bhisāni te brāhmaṇa yā ahāsi.",
  "ja488:10.1_0": "Isīnañhi sā sabbasamāgatānaṁ,",
  "ja488:10.2_0": "Bhuñjeyya sāduṁ avikampamānā;",
  "ja488:10.3_0": "Carātu lābhena vikatthamānā,",
  "ja488:10.4_0": "Bhisāni te brāhmaṇa yā ahāsi.",
  "ja488:11.1_0": "Āvāsiko hotu mahāvihāre,",
  "ja488:11.2_0": "Navakammiko hotu gajaṅgalāyaṁ;",
  "ja488:11.3_0": "Ālokasandhiṁ divasaṁ karotu,",
  "ja488:11.4_0": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:12.1_0": "So bajjhatū pāsasatehi chabbhi,",
  "ja488:12.2_0": "Rammā vanā niyyatu rājadhāniṁ;",
  "ja488:12.3_0": "Tuttehi so haññatu pācanehi,",
  "ja488:12.4_0": "Bhisāni te brāhmaṇa yo ahāsi.",
  "ja488:13.1_0": "Alakkamālī tipukaṇṇaviddho,",
  "ja488:13.2_0": "Laṭṭhīhato sappamukhaṁ upetu;",
  "ja488:13.3_0": "Sakacchabandho visikhaṁ carātu,",
  "ja488:13.4_0": "Bhisāni te brāhmaṇa yo ahāsi”.",
  "ja488:14.1_0": "“Yo ve anaṭṭhaṁva naṭṭhanti cāha,",
  "ja488:14.2_0": "Kāmeva so labhataṁ bhuñjatañca;",
  "ja488:14.3_0": "Agāramajjhe maraṇaṁ upetu,",
  "ja488:14.4_0": "Yo vā bhonto saṅkati kañcideva”.",
  "ja488:15.1_0": "“Yadesamānā vicaranti loke,",
  "ja488:15.2_0": "Iṭṭhañca kantañca bahūnametaṁ;",
  "ja488:15.3_0": "Piyaṁ manuññaṁ cidha jīvaloke,",
  "ja488:15.4_0": "Kasmā isayo nappasaṁsanti kāme”.",
  "ja488:16.1_0": "“Kāmesu ve haññare bajjhare ca,",
  "ja488:16.2_0": "Kāmesu dukkhañca bhayañca jātaṁ;",
  "ja488:16.3_0": "Kāmesu bhūtādhipatī pamattā,",
  "ja488:16.4_0": "Pāpāni kammāni karonti mohā.",
  "ja488:17.1_0": "Te pāpadhammā pasavetva pāpaṁ,",
  "ja488:17.2_0": "Kāyassa bhedā nirayaṁ vajanti;",
  "ja488:17.3_0": "Ādīnavaṁ kāmaguṇesu disvā,",
  "ja488:17.4_0": "Tasmā isayo nappasaṁsanti kāme”.",
  "ja488:18.1_0": "“Vīmaṁsamāno isino bhisāni,",
  "ja488:18.2_0": "Tīre gahetvāna thale nidhesiṁ;",
  "ja488:18.3_0": "Suddhā apāpā isayo vasanti,",
  "ja488:18.4_0": "Etāni te brahmacārī bhisāni”.",
  "ja488:19.1_0": "“Na te naṭā no pana kīḷaneyyā,",
  "ja488:19.2_0": "Na bandhavā no pana te sahāyā;",
  "ja488:19.3_0": "Kismiṁ vupatthambha sahassanetta,",
  "ja488:19.4_0": "Isīhi tvaṁ kīḷasi devarāja”.",
  "ja488:20.1_0": "“Ācariyo mesi pitā ca mayhaṁ,",
  "ja488:20.2_0": "Esā patiṭṭhā khalitassa brahme;",
  "ja488:20.3_0": "Ekāparādhaṁ khama bhūripañña,",
  "ja488:20.4_0": "Na paṇḍitā kodhabalā bhavanti”.",
  "ja488:21.1_0": "“Suvāsitaṁ isinaṁ ekarattaṁ,",
  "ja488:21.2_0": "Yaṁ vāsavaṁ bhūtapatiddasāma;",
  "ja488:21.3_0": "Sabbeva bhonto sumanā bhavantu,",
  "ja488:21.4_0": "Yaṁ brāhmaṇo paccupādī bhisāni”.",
  "ja488:22.1_0": "“Ahañca sāriputto ca,",
  "ja488:22.2_0": "moggallāno ca kassapo;",
  "ja488:22.3_0": "Anuruddho puṇṇo ānando,",
  "ja488:22.4_0": "tadāsuṁ satta bhātaro.",
  "ja488:23.1_0": "Bhaginī uppalavaṇṇā ca,",
  "ja488:23.2_0": "dāsī khujjuttarā tadā;",
  "ja488:23.3_0": "Citto gahapati dāso,",
  "ja488:23.4_0": "yakkho sātāgiro tadā.",
  "ja488:24.1_0": "Pālileyyo tadā nāgo,",
  "ja488:24.2_0": "madhudo seṭṭhavānaro;",
  "ja488:24.3_0": "Kāḷudāyī tadā sakko,",
  "ja488:24.4_0": "evaṁ dhāretha jātakanti”.",
  "ja488:25.1_0": "Bhisajātakaṁ pañcamaṁ."
}