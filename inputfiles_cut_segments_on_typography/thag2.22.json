{
  "thag2.22:0.1_0": "Theragāthā 2.22",
  "thag2.22:0.2_0": "Dukanipāta",
  "thag2.22:0.3_0": "Tatiyavagga",
  "thag2.22:0.4_0": "Bhaddajittheragāthā",
  "thag2.22:1.1_0": "“Panādo nāma so rājā,",
  "thag2.22:1.2_0": "yassa yūpo suvaṇṇayo;",
  "thag2.22:1.3_0": "Tiriyaṁ soḷasubbedho,",
  "thag2.22:1.4_0": "ubbhamāhu sahassadhā.",
  "thag2.22:2.1_0": "Sahassakaṇḍo satageṇḍu,",
  "thag2.22:2.2_0": "dhajālu haritāmayo;",
  "thag2.22:2.3_0": "Anaccuṁ tattha gandhabbā,",
  "thag2.22:2.4_0": "chasahassāni sattadhā”ti.",
  "thag2.22:2.5_0": "… Bhaddajitthero …."
}