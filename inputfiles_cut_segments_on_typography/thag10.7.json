{
  "thag10.7:0.1_0": "Theragāthā 10.7",
  "thag10.7:0.2_0": "Dasakanipāta",
  "thag10.7:0.3_0": "Paṭhamavagga",
  "thag10.7:0.4_0": "(Apara) Gotamattheragāthā",
  "thag10.7:1.1_0": "“Vijāneyya sakaṁ atthaṁ,",
  "thag10.7:1.2_0": "Avalokeyyātha pāvacanaṁ;",
  "thag10.7:1.3_0": "Yañcettha assa patirūpaṁ,",
  "thag10.7:1.4_0": "Sāmaññaṁ ajjhupagatassa.",
  "thag10.7:2.1_0": "Mittaṁ idha ca kalyāṇaṁ,",
  "thag10.7:2.2_0": "Sikkhā vipulaṁ samādānaṁ;",
  "thag10.7:2.3_0": "Sussūsā ca garūnaṁ,",
  "thag10.7:2.4_0": "Etaṁ samaṇassa patirūpaṁ.",
  "thag10.7:3.1_0": "Buddhesu sagāravatā,",
  "thag10.7:3.2_0": "Dhamme apaciti yathābhūtaṁ;",
  "thag10.7:3.3_0": "Saṅghe ca cittikāro,",
  "thag10.7:3.4_0": "Etaṁ samaṇassa patirūpaṁ.",
  "thag10.7:4.1_0": "Ācāragocare yutto,",
  "thag10.7:4.2_0": "Ājīvo sodhito agārayho;",
  "thag10.7:4.3_0": "Cittassa ca saṇṭhapanaṁ,",
  "thag10.7:4.4_0": "Etaṁ samaṇassa patirūpaṁ.",
  "thag10.7:5.1_0": "Cārittaṁ atha vārittaṁ,",
  "thag10.7:5.2_0": "Iriyāpathiyaṁ pasādaniyaṁ;",
  "thag10.7:5.3_0": "Adhicitte ca āyogo,",
  "thag10.7:5.4_0": "Etaṁ samaṇassa patirūpaṁ.",
  "thag10.7:6.1_0": "Āraññakāni senāsanāni,",
  "thag10.7:6.2_0": "Pantāni appasaddāni;",
  "thag10.7:6.3_0": "Bhajitabbāni muninā,",
  "thag10.7:6.4_0": "Etaṁ samaṇassa patirūpaṁ.",
  "thag10.7:7.1_0": "Sīlañca bāhusaccañca,",
  "thag10.7:7.2_0": "Dhammānaṁ pavicayo yathābhūtaṁ;",
  "thag10.7:7.3_0": "Saccānaṁ abhisamayo,",
  "thag10.7:7.4_0": "Etaṁ samaṇassa patirūpaṁ.",
  "thag10.7:8.1_0": "Bhāveyya ca aniccanti,",
  "thag10.7:8.2_0": "Anattasaññaṁ asubhasaññañca;",
  "thag10.7:8.3_0": "Lokamhi ca anabhiratiṁ,",
  "thag10.7:8.4_0": "Etaṁ samaṇassa patirūpaṁ.",
  "thag10.7:9.1_0": "Bhāveyya ca bojjhaṅge,",
  "thag10.7:9.2_0": "Iddhipādāni indriyāni balāni;",
  "thag10.7:9.3_0": "Aṭṭhaṅgamaggamariyaṁ,",
  "thag10.7:9.4_0": "Etaṁ samaṇassa patirūpaṁ.",
  "thag10.7:10.1_0": "Taṇhaṁ pajaheyya muni,",
  "thag10.7:10.2_0": "Samūlake āsave padāleyya;",
  "thag10.7:10.3_0": "Vihareyya vippamutto,",
  "thag10.7:10.4_0": "Etaṁ samaṇassa patirūpan”ti.",
  "thag10.7:10.5_0": "… Gotamo thero …",
  "thag10.7:10.6_0": "Dasakanipāto niṭṭhito.",
  "thag10.7:11.0_0": "Tatruddānaṁ",
  "thag10.7:11.1_0": "Kāḷudāyī ca so thero,",
  "thag10.7:11.2_0": "ekavihārī ca kappino;",
  "thag10.7:11.3_0": "Cūḷapanthako kappo ca,",
  "thag10.7:11.4_0": "upaseno ca gotamo;",
  "thag10.7:11.5_0": "Sattime dasake therā,",
  "thag10.7:11.6_0": "gāthāyo cettha sattatīti."
}