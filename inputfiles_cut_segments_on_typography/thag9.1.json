{
  "thag9.1:0.1_0": "Theragāthā 9.1",
  "thag9.1:0.2_0": "Navakanipāta",
  "thag9.1:0.3_0": "Paṭhamavagga",
  "thag9.1:0.4_0": "Bhūtattheragāthā",
  "thag9.1:1.1_0": "“Yadā dukkhaṁ jarāmaraṇanti paṇḍito,",
  "thag9.1:1.2_0": "Aviddasū yattha sitā puthujjanā;",
  "thag9.1:1.3_0": "Dukkhaṁ pariññāya satova jhāyati,",
  "thag9.1:1.4_0": "Tato ratiṁ paramataraṁ na vindati.",
  "thag9.1:2.1_0": "Yadā dukkhassāvahaniṁ visattikaṁ,",
  "thag9.1:2.2_0": "Papañcasaṅghātadukhādhivāhiniṁ;",
  "thag9.1:2.3_0": "Taṇhaṁ pahantvāna satova jhāyati,",
  "thag9.1:2.4_0": "Tato ratiṁ paramataraṁ na vindati.",
  "thag9.1:3.1_0": "Yadā sivaṁ dvecaturaṅgagāminaṁ,",
  "thag9.1:3.2_0": "Magguttamaṁ sabbakilesasodhanaṁ;",
  "thag9.1:3.3_0": "Paññāya passitva satova jhāyati,",
  "thag9.1:3.4_0": "Tato ratiṁ paramataraṁ na vindati.",
  "thag9.1:4.1_0": "Yadā asokaṁ virajaṁ asaṅkhataṁ,",
  "thag9.1:4.2_0": "Santaṁ padaṁ sabbakilesasodhanaṁ;",
  "thag9.1:4.3_0": "Bhāveti saṁyojanabandhanacchidaṁ,",
  "thag9.1:4.4_0": "Tato ratiṁ paramataraṁ na vindati.",
  "thag9.1:5.1_0": "Yadā nabhe gajjati meghadundubhi,",
  "thag9.1:5.2_0": "Dhārākulā vihagapathe samantato;",
  "thag9.1:5.3_0": "Bhikkhū ca pabbhāragatova jhāyati,",
  "thag9.1:5.4_0": "Tato ratiṁ paramataraṁ na vindati.",
  "thag9.1:6.1_0": "Yadā nadīnaṁ kusumākulānaṁ,",
  "thag9.1:6.2_0": "Vicitta-vāneyya-vaṭaṁsakānaṁ;",
  "thag9.1:6.3_0": "Tīre nisinno sumanova jhāyati,",
  "thag9.1:6.4_0": "Tato ratiṁ paramataraṁ na vindati.",
  "thag9.1:7.1_0": "Yadā nisīthe rahitamhi kānane,",
  "thag9.1:7.2_0": "Deve gaḷantamhi nadanti dāṭhino;",
  "thag9.1:7.3_0": "Bhikkhū ca pabbhāragatova jhāyati,",
  "thag9.1:7.4_0": "Tato ratiṁ paramataraṁ na vindati.",
  "thag9.1:8.1_0": "Yadā vitakke uparundhiyattano,",
  "thag9.1:8.2_0": "Nagantare nagavivaraṁ samassito;",
  "thag9.1:8.3_0": "Vītaddaro vītakhilova jhāyati,",
  "thag9.1:8.4_0": "Tato ratiṁ paramataraṁ na vindati.",
  "thag9.1:9.1_0": "Yadā sukhī malakhilasokanāsano,",
  "thag9.1:9.2_0": "Niraggaḷo nibbanatho visallo;",
  "thag9.1:9.3_0": "Sabbāsave byantikatova jhāyati,",
  "thag9.1:9.4_0": "Tato ratiṁ paramataraṁ na vindatī”ti.",
  "thag9.1:9.5_0": "… Bhūto thero …",
  "thag9.1:9.6_0": "Navakanipāto niṭṭhito.",
  "thag9.1:10.0_0": "Tatruddānaṁ",
  "thag9.1:10.1_0": "Bhūto tathaddaso thero,",
  "thag9.1:10.2_0": "eko khaggavisāṇavā;",
  "thag9.1:10.3_0": "Navakamhi nipātamhi,",
  "thag9.1:10.4_0": "gāthāyopi imā navāti."
}