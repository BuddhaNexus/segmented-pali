{
  "thig12.1:0.1_0": "Therīgāthā 12.1",
  "thig12.1:0.2_0": "Soḷasakanipāta",
  "thig12.1:0.3_0": "Puṇṇātherīgāthā",
  "thig12.1:1.1_0": "“Udahārī ahaṁ sīte,",
  "thig12.1:1.2_0": "sadā udakamotariṁ;",
  "thig12.1:1.3_0": "Ayyānaṁ daṇḍabhayabhītā,",
  "thig12.1:1.4_0": "vācādosabhayaṭṭitā.",
  "thig12.1:2.1_0": "Kassa brāhmaṇa tvaṁ bhīto,",
  "thig12.1:2.2_0": "sadā udakamotari;",
  "thig12.1:2.3_0": "Vedhamānehi gattehi,",
  "thig12.1:2.4_0": "sītaṁ vedayase bhusaṁ”.",
  "thig12.1:3.1_0": "“Jānantī vata maṁ bhoti,",
  "thig12.1:3.2_0": "puṇṇike paripucchasi;",
  "thig12.1:3.3_0": "Karontaṁ kusalaṁ kammaṁ,",
  "thig12.1:3.4_0": "rundhantaṁ katapāpakaṁ.",
  "thig12.1:4.1_0": "Yo ca vuḍḍho daharo vā,",
  "thig12.1:4.2_0": "pāpakammaṁ pakubbati;",
  "thig12.1:4.3_0": "Dakābhisecanā sopi,",
  "thig12.1:4.4_0": "pāpakammā pamuccati”.",
  "thig12.1:5.1_0": "“Ko nu te idamakkhāsi,",
  "thig12.1:5.2_0": "ajānantassa ajānako;",
  "thig12.1:5.3_0": "Dakābhisecanā nāma,",
  "thig12.1:5.4_0": "pāpakammā pamuccati.",
  "thig12.1:6.1_0": "Saggaṁ nūna gamissanti,",
  "thig12.1:6.2_0": "sabbe maṇḍūkakacchapā;",
  "thig12.1:6.3_0": "Nāgā ca susumārā ca,",
  "thig12.1:6.4_0": "ye caññe udake carā.",
  "thig12.1:7.1_0": "Orabbhikā sūkarikā,",
  "thig12.1:7.2_0": "macchikā migabandhakā;",
  "thig12.1:7.3_0": "Corā ca vajjhaghātā ca,",
  "thig12.1:7.4_0": "ye caññe pāpakammino;",
  "thig12.1:7.5_0": "Dakābhisecanā tepi,",
  "thig12.1:7.6_0": "pāpakammā pamuccare.",
  "thig12.1:8.1_0": "Sace imā nadiyo te,",
  "thig12.1:8.2_0": "pāpaṁ pubbe kataṁ vahuṁ;",
  "thig12.1:8.3_0": "Puññampimā vaheyyuṁ te,",
  "thig12.1:8.4_0": "tena tvaṁ paribāhiro.",
  "thig12.1:9.1_0": "Yassa brāhmaṇa tvaṁ bhīto,",
  "thig12.1:9.2_0": "sadā udakamotari;",
  "thig12.1:9.3_0": "Tameva brahme mā kāsi,",
  "thig12.1:9.4_0": "mā te sītaṁ chaviṁ hane”.",
  "thig12.1:10.1_0": "“Kummaggapaṭipannaṁ maṁ,",
  "thig12.1:10.2_0": "ariyamaggaṁ samānayi;",
  "thig12.1:10.3_0": "Dakābhisecanā bhoti,",
  "thig12.1:10.4_0": "imaṁ sāṭaṁ dadāmi te”.",
  "thig12.1:11.1_0": "“Tuyheva sāṭako hotu,",
  "thig12.1:11.2_0": "nāhamicchāmi sāṭakaṁ;",
  "thig12.1:11.3_0": "Sace bhāyasi dukkhassa,",
  "thig12.1:11.4_0": "sace te dukkhamappiyaṁ.",
  "thig12.1:12.1_0": "Mākāsi pāpakaṁ kammaṁ,",
  "thig12.1:12.2_0": "āvi vā yadi vā raho;",
  "thig12.1:12.3_0": "Sace ca pāpakaṁ kammaṁ,",
  "thig12.1:12.4_0": "karissasi karosi vā.",
  "thig12.1:13.1_0": "Na te dukkhā pamutyatthi,",
  "thig12.1:13.2_0": "upeccāpi palāyato;",
  "thig12.1:13.3_0": "Sace bhāyasi dukkhassa,",
  "thig12.1:13.4_0": "sace te dukkhamappiyaṁ.",
  "thig12.1:14.1_0": "Upehi saraṇaṁ buddhaṁ,",
  "thig12.1:14.2_0": "dhammaṁ saṅghañca tādinaṁ;",
  "thig12.1:14.3_0": "Samādiyāhi sīlāni,",
  "thig12.1:14.4_0": "taṁ te atthāya hehiti”.",
  "thig12.1:15.1_0": "“Upemi saraṇaṁ buddhaṁ,",
  "thig12.1:15.2_0": "dhammaṁ saṅghañca tādinaṁ;",
  "thig12.1:15.3_0": "Samādiyāmi sīlāni,",
  "thig12.1:15.4_0": "taṁ me atthāya hehiti.",
  "thig12.1:16.1_0": "Brahmabandhu pure āsiṁ,",
  "thig12.1:16.2_0": "ajjamhi saccabrāhmaṇo;",
  "thig12.1:16.3_0": "Tevijjo vedasampanno,",
  "thig12.1:16.4_0": "sottiyo camhi nhātako”ti.",
  "thig12.1:17.1_0": "… Puṇṇā therī ….",
  "thig12.1:18.1_0": "Soḷasakanipāto niṭṭhito."
}