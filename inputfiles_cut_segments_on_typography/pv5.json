{
  "pv5:0.1_0": "Petavatthu",
  "pv5:0.2_0": "Uragavagga",
  "pv5:0.3_0": "5. Tirokuṭṭapetavatthu",
  "pv5:1.1_0": "“Tirokuṭṭesu tiṭṭhanti,",
  "pv5:1.2_0": "sandhisiṅghāṭakesu ca;",
  "pv5:1.3_0": "Dvārabāhāsu tiṭṭhanti,",
  "pv5:1.4_0": "āgantvāna sakaṁ gharaṁ.",
  "pv5:2.1_0": "Pahūte annapānamhi,",
  "pv5:2.2_0": "khajjabhojje upaṭṭhite;",
  "pv5:2.3_0": "Na tesaṁ koci sarati,",
  "pv5:2.4_0": "sattānaṁ kammapaccayā.",
  "pv5:3.1_0": "Evaṁ dadanti ñātīnaṁ,",
  "pv5:3.2_0": "ye honti anukampakā;",
  "pv5:3.3_0": "Suciṁ paṇītaṁ kālena,",
  "pv5:3.4_0": "kappiyaṁ pānabhojanaṁ;",
  "pv5:3.5_0": "‘Idaṁ vo ñātīnaṁ hotu,",
  "pv5:3.6_0": "sukhitā hontu ñātayo’.",
  "pv5:4.1_0": "Te ca tattha samāgantvā,",
  "pv5:4.2_0": "ñātipetā samāgatā;",
  "pv5:4.3_0": "Pahūte annapānamhi,",
  "pv5:4.4_0": "sakkaccaṁ anumodare.",
  "pv5:5.1_0": "‘Ciraṁ jīvantu no ñātī,",
  "pv5:5.2_0": "yesaṁ hetu labhāmase;",
  "pv5:5.3_0": "Amhākañca katā pūjā,",
  "pv5:5.4_0": "dāyakā ca anipphalā’.",
  "pv5:6.1_0": "Na hi tattha kasī atthi,",
  "pv5:6.2_0": "gorakkhettha na vijjati;",
  "pv5:6.3_0": "Vaṇijjā tādisī natthi,",
  "pv5:6.4_0": "hiraññena kayākayaṁ;",
  "pv5:6.5_0": "Ito dinnena yāpenti,",
  "pv5:6.6_0": "petā kālagatā tahiṁ.",
  "pv5:7.1_0": "Unname udakaṁ vuṭṭhaṁ,",
  "pv5:7.2_0": "yathā ninnaṁ pavattati;",
  "pv5:7.3_0": "Evamevaṁ ito dinnaṁ,",
  "pv5:7.4_0": "petānaṁ upakappati.",
  "pv5:8.1_0": "Yathā vārivahā pūrā,",
  "pv5:8.2_0": "paripūrenti sāgaraṁ;",
  "pv5:8.3_0": "Evamevaṁ ito dinnaṁ,",
  "pv5:8.4_0": "petānaṁ upakappati.",
  "pv5:9.1_0": "‘Adāsi me akāsi me,",
  "pv5:9.2_0": "ñāti mittā sakhā ca me’;",
  "pv5:9.3_0": "Petānaṁ dakkhiṇaṁ dajjā,",
  "pv5:9.4_0": "pubbe katamanussaraṁ.",
  "pv5:10.1_0": "Na hi ruṇṇaṁ vā soko vā,",
  "pv5:10.2_0": "yā caññā paridevanā;",
  "pv5:10.3_0": "Na taṁ petānamatthāya,",
  "pv5:10.4_0": "evaṁ tiṭṭhanti ñātayo.",
  "pv5:11.1_0": "Ayañca kho dakkhiṇā dinnā,",
  "pv5:11.2_0": "saṅghamhi suppatiṭṭhitā;",
  "pv5:11.3_0": "Dīgharattaṁ hitāyassa,",
  "pv5:11.4_0": "ṭhānaso upakappati.",
  "pv5:12.1_0": "So ñātidhammo ca ayaṁ nidassito,",
  "pv5:12.2_0": "Petāna pūjā ca katā uḷārā;",
  "pv5:12.3_0": "Balañca bhikkhūnamanuppadinnaṁ,",
  "pv5:12.4_0": "Tumhehi puññaṁ pasutaṁ anappakan”ti.",
  "pv5:13.1_0": "Tirokuṭṭapetavatthu pañcamaṁ."
}