{
  "thag4.2:0.1_0": "Theragāthā 4.2",
  "thag4.2:0.2_0": "Catukkanipāta",
  "thag4.2:0.3_0": "Paṭhamavagga",
  "thag4.2:0.4_0": "Bhaguttheragāthā",
  "thag4.2:1.1_0": "“Ahaṁ middhena pakato,",
  "thag4.2:1.2_0": "vihārā upanikkhamiṁ;",
  "thag4.2:1.3_0": "Caṅkamaṁ abhiruhanto,",
  "thag4.2:1.4_0": "tattheva papatiṁ chamā.",
  "thag4.2:2.1_0": "Gattāni parimajjitvā,",
  "thag4.2:2.2_0": "punapāruyha caṅkamaṁ;",
  "thag4.2:2.3_0": "Caṅkame caṅkamiṁ sohaṁ,",
  "thag4.2:2.4_0": "ajjhattaṁ susamāhito.",
  "thag4.2:3.1_0": "Tato me manasīkāro,",
  "thag4.2:3.2_0": "yoniso udapajjatha;",
  "thag4.2:3.3_0": "Ādīnavo pāturahu,",
  "thag4.2:3.4_0": "nibbidā samatiṭṭhatha.",
  "thag4.2:4.1_0": "Tato cittaṁ vimucci me,",
  "thag4.2:4.2_0": "passa dhammasudhammataṁ;",
  "thag4.2:4.3_0": "Tisso vijjā anuppattā,",
  "thag4.2:4.4_0": "kataṁ buddhassa sāsanan”ti.",
  "thag4.2:4.5_0": "… Bhagutthero …."
}