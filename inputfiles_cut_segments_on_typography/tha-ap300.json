{
  "tha-ap300:0.1_0": "Therāpadāna",
  "tha-ap300:0.2_0": "Citakapūjakavagga",
  "tha-ap300:0.3_0": "8. Saraṇagamaniyattheraapadāna",
  "tha-ap300:1.1_0": "“Pabbate himavantamhi,",
  "tha-ap300:1.2_0": "ahosiṁ luddako tadā;",
  "tha-ap300:1.3_0": "Vipassiṁ addasaṁ buddhaṁ,",
  "tha-ap300:1.4_0": "lokajeṭṭhaṁ narāsabhaṁ.",
  "tha-ap300:2.1_0": "Upāsitvāna sambuddhaṁ,",
  "tha-ap300:2.2_0": "veyyāvaccamakāsahaṁ;",
  "tha-ap300:2.3_0": "Saraṇañca upāgacchiṁ,",
  "tha-ap300:2.4_0": "dvipadindassa tādino.",
  "tha-ap300:3.1_0": "Ekanavutito kappe,",
  "tha-ap300:3.2_0": "saraṇaṁ upagacchahaṁ;",
  "tha-ap300:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap300:3.4_0": "saraṇāgamanapphalaṁ.",
  "tha-ap300:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap300:4.2_0": "…pe…",
  "tha-ap300:4.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap300:5.1_0": "Itthaṁ sudaṁ āyasmā saraṇagamaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap300:6.1_0": "Saraṇagamaniyattherassāpadānaṁ aṭṭhamaṁ."
}