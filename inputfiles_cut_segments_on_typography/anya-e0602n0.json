{
  "anya-e0602n0:0_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n0:1_0": "Mahāpaṇāmapāṭha",
  "anya-e0602n0:2_0": "(Buddhavandanā)",
  "anya-e0602n0:3_0": "1.",
  "anya-e0602n0:4_0": "So, ko; Ne, saṃ;",
  "anya-e0602n0:5_0": "2.",
  "anya-e0602n0:6_0": "Satthā, nesaṃ; Khemaṃ, dātā;",
  "anya-e0602n0:7_0": "3.",
  "anya-e0602n0:8_0": "Heḷāta-kkāro so; Jantūnaṃ, no mā nu;",
  "anya-e0602n0:9_0": "4.",
  "anya-e0602n0:10_0": "So lokandhaṃ, hantvā nakko;",
  "anya-e0602n0:11_0": "Sattambojaṃ, bodhetā nu.",
  "anya-e0602n0:12_0": "5.",
  "anya-e0602n0:13_0": "Jinasūriyo, tibhavanabhe;",
  "anya-e0602n0:14_0": "Muhatimiraṃ, abhitapaye.",
  "anya-e0602n0:15_0": "6.",
  "anya-e0602n0:16_0": "Jeno jinamūle, disvā janakāyaṃ;",
  "anya-e0602n0:17_0": "Saṃsāranimuggaṃ, sabbaññuta micchaṃ.",
  "anya-e0602n0:18_0": "7.",
  "anya-e0602n0:19_0": "Hitvā karupetaṃ, mokkhaṃ paṇidhānaṃ;",
  "anya-e0602n0:20_0": "Vattesi dayāṇā, yo taṃ muni vande.",
  "anya-e0602n0:21_0": "8.",
  "anya-e0602n0:22_0": "Sutāyubhariyā me, dhanaṅgamapi cajjaṃ.",
  "anya-e0602n0:23_0": "Cinaṃ budhinidāne, agā muniyaṃ metaṃ.",
  "anya-e0602n0:24_0": "9.",
  "anya-e0602n0:25_0": "So sasajātiya dehaṃ, cajjiya dānavarañca;",
  "anya-e0602n0:26_0": "Nāgusabho varasīlaṃ, pūrayi samparicāgo.",
  "anya-e0602n0:27_0": "10.",
  "anya-e0602n0:28_0": "Nekkhammaggaṃ rājā hutvā, senabbidvā paññāseṭṭhaṃ;",
  "anya-e0602n0:29_0": "Vedehindo vīrukkaṃsaṃ, khantīvādī khantīseṭṭhaṃ.",
  "anya-e0602n0:30_0": "11.",
  "anya-e0602n0:31_0": "So sutasomo tathagaṃ, temiya dhiṭṭhānavaraṃ;",
  "anya-e0602n0:32_0": "Ekabhugo mettavaraṃ, lomahasopekkhataraṃ.",
  "anya-e0602n0:33_0": "12.",
  "anya-e0602n0:34_0": "Pāramī tidukkarāva, pūriyāna seṭṭhabodhi;",
  "anya-e0602n0:35_0": "Pāpuṇittha yo ananta-dhammasāradaṃ namāmi.",
  "anya-e0602n0:36_0": "13.",
  "anya-e0602n0:37_0": "Pahāya cakkavattikaṃ, karopanīta maddiyaṃ;",
  "anya-e0602n0:38_0": "Bhusidhare sasenakaṃ, ajeni pāpimaṃ name.",
  "anya-e0602n0:39_0": "14.",
  "anya-e0602n0:40_0": "Athuttaraṃ jayākaraṃ, bahūpakārataṃ jino;",
  "anya-e0602n0:41_0": "Paṭicca nimmisakkhibhi, udikkhate namāmi taṃ.",
  "anya-e0602n0:42_0": "15.",
  "anya-e0602n0:43_0": "Caṅkame maruvimati yo, chindayaṃ kami rataniye;",
  "anya-e0602n0:44_0": "Iddhipāṭihiraṇakaro, cakkhumaṃ tamabhipaṇame.",
  "anya-e0602n0:45_0": "16.",
  "anya-e0602n0:46_0": "Atha ratanaghare buddho, chadidhiti janayaṃ saṅkhyaṃ;",
  "anya-e0602n0:47_0": "Sīmīsā tamabhidhammaṃ yo, suranaramahitaṃ vande.",
  "anya-e0602n0:48_0": "17.",
  "anya-e0602n0:49_0": "Nigrodhantika nubbhavī sukhaṃ, dhammaṃ yo vicinaṃ nadhīvaro;",
  "anya-e0602n0:50_0": "Kicchāladdha manaññabodhiyaṃ, vande taṃ sugataṃ nigrocaraṃ.",
  "anya-e0602n0:51_0": "18.",
  "anya-e0602n0:52_0": "Sabbhogehi tha mucalindena,",
  "anya-e0602n0:53_0": "Nāgindena rahasi pāvutto;",
  "anya-e0602n0:54_0": "Sokhyaṃ yo nubhavi vimuttiṃtaṃ,",
  "anya-e0602n0:55_0": "Vande mārāji atulappañño.",
  "anya-e0602n0:56_0": "19.",
  "anya-e0602n0:57_0": "Kāruṇiko rājāyatane yo,",
  "anya-e0602n0:58_0": "Bhoja muḷāraṃ bhojjarasekaṃ;",
  "anya-e0602n0:59_0": "Vāsa makā nantagguṇadhāro,",
  "anya-e0602n0:60_0": "Ekagato vandāmi mahesī.",
  "anya-e0602n0:61_0": "20.",
  "anya-e0602n0:62_0": "Keyyaṃ keyyaṃ abhijayaketuṃ,",
  "anya-e0602n0:63_0": "Jeyyaṃ jeyyaṃ varajayapānaṃ;",
  "anya-e0602n0:64_0": "Peyyaṃ peyyaṃ suvici name taṃ,",
  "anya-e0602n0:65_0": "Neyyaṃ neyyaṃ samatamupekkhiṃ.",
  "anya-e0602n0:66_0": "21.",
  "anya-e0602n0:67_0": "Satta ca sattāhe vijitāvī,",
  "anya-e0602n0:68_0": "Khepiya nigrodhaṃ puna gantvā;",
  "anya-e0602n0:69_0": "Dhammasududdasyaṃ pati jāto,",
  "anya-e0602n0:70_0": "Dhammakathā pposukka vitakko.",
  "anya-e0602n0:71_0": "22.",
  "anya-e0602n0:72_0": "Marugaṇehi brahmunā samaṃ,",
  "anya-e0602n0:73_0": "Ratanadāmameruṇā dadā;",
  "anya-e0602n0:74_0": "Samabhiyācito paṭissavaṃ,",
  "anya-e0602n0:75_0": "Dasabalo namāmi desituṃ.",
  "anya-e0602n0:76_0": "23.",
  "anya-e0602n0:77_0": "Gantvā isippātakkānanañca,",
  "anya-e0602n0:78_0": "Satthā migaddāyaṃ desayittha;",
  "anya-e0602n0:79_0": "Saccappakāraṃ yo dhammacakka-",
  "anya-e0602n0:80_0": "Suttaṃ name chabbīdhaṃsu tāva.",
  "anya-e0602n0:81_0": "24.",
  "anya-e0602n0:82_0": "Rañño magadhassa katappaṭiñño,",
  "anya-e0602n0:83_0": "Gantvānatha rājagahaṃ vineti;",
  "anya-e0602n0:84_0": "Satte malarogayute gadaggaṃ,",
  "anya-e0602n0:85_0": "Pāyetuna taṃ paṇame bhisakkaṃ.",
  "anya-e0602n0:86_0": "25.",
  "anya-e0602n0:87_0": "Sakyādhivāse kapile saññatiṃ,",
  "anya-e0602n0:88_0": "Mānaddhajaṃ bhindiya middhivātā;",
  "anya-e0602n0:89_0": "Dhammāmataṃ pāyi pituppabhuti,",
  "anya-e0602n0:90_0": "Vandāmi sakyinda manomadassiṃ.",
  "anya-e0602n0:91_0": "26.",
  "anya-e0602n0:92_0": "Anāthapiṇḍoti vhayena nanta-",
  "anya-e0602n0:93_0": "Ddhanaṃ cajitvā sukate vihāre;",
  "anya-e0602n0:94_0": "Vihāsi bhiyyo janatā hitatthaṃ,",
  "anya-e0602n0:95_0": "Sudhammabheriṃ vadayaṃ bhivande.",
  "anya-e0602n0:96_0": "27.",
  "anya-e0602n0:97_0": "Upetapuññaṃ varalakkhaṇokaṃ-",
  "anya-e0602n0:98_0": "Ṇokaṃ visuddhaṃ jalitappadīmaṃ;",
  "anya-e0602n0:99_0": "Dīpaṃ pajānaṃ anighaṃ navajjaṃ-",
  "anya-e0602n0:100_0": "Navajjavācaṃ sugataṃ namāmi.",
  "anya-e0602n0:101_0": "28.",
  "anya-e0602n0:102_0": "Munibhānu dhammapabhāhi jana-",
  "anya-e0602n0:103_0": "Mbuja muddhatandhatamo sutapo;",
  "anya-e0602n0:104_0": "Karuṇāruṇo samabodhayi yo,",
  "anya-e0602n0:105_0": "Bhavisītalattapano paṇame.",
  "anya-e0602n0:106_0": "29.",
  "anya-e0602n0:107_0": "Indu viyambaramajjhatale yo,",
  "anya-e0602n0:108_0": "Rājati tāragaṇena munindo;",
  "anya-e0602n0:109_0": "Ariyagaṇapparito tibhave taṃ,",
  "anya-e0602n0:110_0": "Sādara muggatasobha mavandi.",
  "anya-e0602n0:111_0": "30.",
  "anya-e0602n0:112_0": "Mūlāmūlā tiṃsatipāramiyo,",
  "anya-e0602n0:113_0": "Sākhāsākhā majjhimajjhānakāyā;",
  "anya-e0602n0:114_0": "Pattāpattā buddhacakkhuni yassa,",
  "anya-e0602n0:115_0": "Pupphāpupphā kāruṇā maggakhandho.",
  "anya-e0602n0:116_0": "31.",
  "anya-e0602n0:117_0": "Sārāsārā yamakā pheggubhiññā,",
  "anya-e0602n0:118_0": "Sabbālambaṅkurakaṃ sīlavaṇṭaṃ;",
  "anya-e0602n0:119_0": "Sesādhammā madhupakkapphalāni,",
  "anya-e0602n0:120_0": "Raṃsīchallī sutacā lakkhaṇāni.",
  "anya-e0602n0:121_0": "32.",
  "anya-e0602n0:122_0": "Chāyupagā suṃ puthunaradevā,",
  "anya-e0602n0:123_0": "Mārajidīpaṅkara mahijātaṃ;",
  "anya-e0602n0:124_0": "Patthatanantañca kusalabījaṃ,",
  "anya-e0602n0:125_0": "Ekaruhaṃ pādapamuni vande.",
  "anya-e0602n0:126_0": "33.",
  "anya-e0602n0:127_0": "Māratitthiyaripuṃ tamañca yo,",
  "anya-e0602n0:128_0": "Dhaṃsayaṃ nagaradhamma māpayaṃ;",
  "anya-e0602n0:129_0": "Sīlanīvaraṇa dvārakoṭṭhakaṃ,",
  "anya-e0602n0:130_0": "Esikāparamasaddha muttamaṃ.",
  "anya-e0602n0:131_0": "34.",
  "anya-e0602n0:132_0": "Dvārapālasuyataṃ satiṭālaṃ,",
  "anya-e0602n0:133_0": "Ñāṇacaccara sighāṭapadiddhiṃ;",
  "anya-e0602n0:134_0": "Dhammamaggakuṭisāla sahittaṃ,",
  "anya-e0602n0:135_0": "Dhammasenapatisārijabhūtaṃ.",
  "anya-e0602n0:136_0": "35.",
  "anya-e0602n0:137_0": "Dutiyasutaparohitaṃ mahā-",
  "anya-e0602n0:138_0": "Dhutaguṇadharamaggha dassikaṃ;",
  "anya-e0602n0:139_0": "Vinayacinaka dhammarakkhakaṃ,",
  "anya-e0602n0:140_0": "Tibhavapatika dhammarājiyaṃ.",
  "anya-e0602n0:141_0": "36.",
  "anya-e0602n0:142_0": "Sutaṃ sutaṃ sabbadhi sajjanaṃjanaṃ,",
  "anya-e0602n0:143_0": "Mitaṃ mitaṃ nantaguṇālayaṃ layaṃ;",
  "anya-e0602n0:144_0": "Hutaṃ hutaṃ jantunamānamaṃ namaṃ,",
  "anya-e0602n0:145_0": "Bhave bhave tebhavamaṅgalaṃ galaṃ.",
  "anya-e0602n0:146_0": "37.",
  "anya-e0602n0:147_0": "Lokābhirāmaṃ ramaṇeyyaveduraṃ,",
  "anya-e0602n0:148_0": "Lokantaguṃ antubhayānupāgataṃ;",
  "anya-e0602n0:149_0": "Lokaddhajaṃ mānadhajappahārakaṃ,",
  "anya-e0602n0:150_0": "Lokaggaruṃ aggaru paccaye name.",
  "anya-e0602n0:151_0": "38.",
  "anya-e0602n0:152_0": "Makuṭaggaphalaṃ nayanañcanikaṃ,",
  "anya-e0602n0:153_0": "Savanabbhusanaṃ vadanabbhusanaṃ;",
  "anya-e0602n0:154_0": "Galamaṇḍanamiddhi manaññurasaṃ,",
  "anya-e0602n0:155_0": "Kiriyaññudaraṃ dvikhaṇaññukaraṃ.",
  "anya-e0602n0:156_0": "39.",
  "anya-e0602n0:157_0": "Kaṭivibhūsana majjhimaññaṇakaṃ,",
  "anya-e0602n0:158_0": "Dayavilepana dhāraṇamaṇḍanaṃ;",
  "anya-e0602n0:159_0": "Paṭakhilaññunivattha manuttaraṃ,",
  "anya-e0602n0:160_0": "Munimaruttama meka mahaṃ name.",
  "anya-e0602n0:161_0": "40.",
  "anya-e0602n0:162_0": "Sativara sucakaṃ ibbhaggapaññaṃ,",
  "anya-e0602n0:163_0": "Suvīriyavasuvāhaṃ pītiselaṃ;",
  "anya-e0602n0:164_0": "Gahapatisamathaggaṃ thīpasaddhiṃ,",
  "anya-e0602n0:165_0": "Asaṇiyasunupekkhaṃ sattabhogaṃ.",
  "anya-e0602n0:166_0": "41.",
  "anya-e0602n0:167_0": "Catudisikiddhippada masahāyaṃ,",
  "anya-e0602n0:168_0": "Suparivutaṃ khattiyavirajānaṃ;",
  "anya-e0602n0:169_0": "Suciparisaṃ devanara manāpaṃ,",
  "anya-e0602n0:170_0": "Dasabalacakkādhipati bhivande.",
  "anya-e0602n0:171_0": "42.",
  "anya-e0602n0:172_0": "Samādhibbahiddhaṃ saticchaṭṭhaselaṃ,",
  "anya-e0602n0:173_0": "Virappañcamā jīvamajjhaṃ sukamma-",
  "anya-e0602n0:174_0": "Ttatiyaṃ suvācādutiyaṃ bhiseṭṭhaṃ,",
  "anya-e0602n0:175_0": "Samātakkapubbañca sattappavāraṃ.",
  "anya-e0602n0:176_0": "43.",
  "anya-e0602n0:177_0": "Vividhañāṇapabhutibbasākaraṃ,",
  "anya-e0602n0:178_0": "Bahumahiddhika marūna māsayaṃ;",
  "anya-e0602n0:179_0": "Dhuṃvapabhājalitarāmaṇeyyakaṃ,",
  "anya-e0602n0:180_0": "Sugatanerunagarāja māname.",
  "anya-e0602n0:181_0": "44.",
  "anya-e0602n0:182_0": "Sīlajjalaṃ ratanadhamma mākaraṃ,",
  "anya-e0602n0:183_0": "Bhiññāviciṃ satikulaṭṭhi gambhiraṃ;",
  "anya-e0602n0:184_0": "Vitthiṇṇañāṇa mariyodajāsayaṃ,",
  "anya-e0602n0:185_0": "Aṭṭhambīdhacchariyakaṃ asandanaṃ.",
  "anya-e0602n0:186_0": "45.",
  "anya-e0602n0:187_0": "Bahunajjamosaraṇa mekarasaṃ,",
  "anya-e0602n0:188_0": "Durupaggamaṃ acitasambharinaṃ;",
  "anya-e0602n0:189_0": "Puthupotapuññavatameva name,",
  "anya-e0602n0:190_0": "Dvīpaduttamaṇṇava nadindavaraṃ.",
  "anya-e0602n0:191_0": "46.",
  "anya-e0602n0:192_0": "Abhiniharadhanuṃ guṇapāramiṃ,",
  "anya-e0602n0:193_0": "Naḷamatimanabājarahammukhā;",
  "anya-e0602n0:194_0": "Dhitisamitasarena sudhārayaṃ,",
  "anya-e0602n0:195_0": "Malama gagaṇa mekapavedanā.",
  "anya-e0602n0:196_0": "47.",
  "anya-e0602n0:197_0": "Yo pāvedhesiṃ aggamaggañca tūṇiṃ,",
  "anya-e0602n0:198_0": "Dhammālaṅkārabbamma mekabbalaṃ taṃ;",
  "anya-e0602n0:199_0": "Nettiṃsānantañāṇa gīrellimantaṃ,",
  "anya-e0602n0:200_0": "Sabbaññussāsaṃ iddhidaṇḍaṃ namāmi.",
  "anya-e0602n0:201_0": "48.",
  "anya-e0602n0:202_0": "Varatapavuṭṭhi subījakasaddhā,",
  "anya-e0602n0:203_0": "Matiyuganaṅgala hīrutapīsā;",
  "anya-e0602n0:204_0": "Susamatharajju satidvijatuttaṃ,",
  "anya-e0602n0:205_0": "Vīriyadurāvaha saccanidānaṃ.",
  "anya-e0602n0:206_0": "49.",
  "anya-e0602n0:207_0": "Vatisaṃvaraṃ soratamocanañcaṃ,",
  "anya-e0602n0:208_0": "Saraṇā nivattabbahanatthaṃ yassa;",
  "anya-e0602n0:209_0": "Amatapphalaṃ nekarasehupetaṃ,",
  "anya-e0602n0:210_0": "Sugataṃ mahākassaka mābhivande.",
  "anya-e0602n0:211_0": "50.",
  "anya-e0602n0:212_0": "Devaggo tidasapure varāsane yo,",
  "anya-e0602n0:213_0": "Devānaṃ janikapabhutinaṃ bhidhammaṃ;",
  "anya-e0602n0:214_0": "Bālakkova laḷayamācale timāsaṃ,",
  "anya-e0602n0:215_0": "Desesyā paravisayaṃ name ajeyyo.",
  "anya-e0602n0:216_0": "51.",
  "anya-e0602n0:217_0": "Mahāyaso vividhasubhappakāsakaṃ,",
  "anya-e0602n0:218_0": "Kurūsu yo amitaguṇo tamonudo;",
  "anya-e0602n0:219_0": "Parappavādahari subhānuyoginaṃ,",
  "anya-e0602n0:220_0": "Namāmi taṃ kathayi satippaṭhānakaṃ.",
  "anya-e0602n0:221_0": "52.",
  "anya-e0602n0:222_0": "Samathakapaliko sasnehasammāsati,",
  "anya-e0602n0:223_0": "Paramamatiginī savaṭṭiparakkamo;",
  "anya-e0602n0:224_0": "Sakalajutikaro sudhammapadīpako,",
  "anya-e0602n0:225_0": "Ima mupajalito jinena namāmahaṃ.",
  "anya-e0602n0:226_0": "53.",
  "anya-e0602n0:227_0": "Vigatagatamalaṃ malagatavigataṃ,",
  "anya-e0602n0:228_0": "Mahita hitamanaṃ manahitamahitaṃ;",
  "anya-e0602n0:229_0": "Vibhavabhavakaraṃ karabhavavibhavaṃ,",
  "anya-e0602n0:230_0": "Sujana janaguṇaṃ guṇajanasujanaṃ.",
  "anya-e0602n0:231_0": "54.",
  "anya-e0602n0:232_0": "Sīlaggadaṇḍavicitaṃ susamādhipattaṃ,",
  "anya-e0602n0:233_0": "Sobhāsamujjala manantaga ñāṇasīkhaṃ;",
  "anya-e0602n0:234_0": "Saddhammaseṭṭharatanañca tilokaketuṃ,",
  "anya-e0602n0:235_0": "Vandāmi locanabhiseka susobhayuttaṃ.",
  "anya-e0602n0:236_0": "55.",
  "anya-e0602n0:237_0": "Vinayanaya manayavinaya manamitaṃ,",
  "anya-e0602n0:238_0": "Vijayajaya majayavijaya matulitaṃ;",
  "anya-e0602n0:239_0": "Vibhajabhaja mabhajavibhaja mananakaṃ,",
  "anya-e0602n0:240_0": "Visamasama masamavisama mabhiname.",
  "anya-e0602n0:241_0": "56.",
  "anya-e0602n0:242_0": "Paramarama maramaparama matiguṇaṃ,",
  "anya-e0602n0:243_0": "Pagahagati magatipagata mamamakaṃ;",
  "anya-e0602n0:244_0": "Pacayacaya macayapapaya manaṇakaṃ,",
  "anya-e0602n0:245_0": "Pakatakata makatapakata macalakaṃ.",
  "anya-e0602n0:246_0": "57.",
  "anya-e0602n0:247_0": "Ujuka mayanamagge mokkhadesaṃ niyāsi,",
  "anya-e0602n0:248_0": "Vararathakujarena cammacakkena satthā;",
  "anya-e0602n0:249_0": "Hiritapadukapālambena dhammassutena,",
  "anya-e0602n0:250_0": "Satinivarayutena ppāṭihiraddhajena.",
  "anya-e0602n0:251_0": "58.",
  "anya-e0602n0:252_0": "Avihananakkhinā suyama nemupakkharā,",
  "anya-e0602n0:253_0": "Udariyamabbhinā paripuraṅgasaccinā;",
  "anya-e0602n0:254_0": "Kusalavibhūsinā nimadakupparena yo,",
  "anya-e0602n0:255_0": "Akharanatesinā gupitasilanandanā.",
  "anya-e0602n0:256_0": "59.",
  "anya-e0602n0:257_0": "Anusanughātinā matipurejavena kāla-",
  "anya-e0602n0:258_0": "Ññutamatisārike na ca visāradatthidaṇḍā;",
  "anya-e0602n0:259_0": "Satituda dhītirasmi manadammasindhavena,",
  "anya-e0602n0:260_0": "Vinayagaṇe namāmi ta matulyasatthavāhaṃ.",
  "anya-e0602n0:261_0": "60.",
  "anya-e0602n0:262_0": "Yamakkaggijālaṃ paravisaya maccherasahitaṃ,",
  "anya-e0602n0:263_0": "Dudiṭṭhandhubbāhaṃ yugagahaṇatitthīna makarī;",
  "anya-e0602n0:264_0": "Bahūnaṃ majjhe yo ratanakamane pāṭihariyaṃ,",
  "anya-e0602n0:265_0": "Jayakketussāpi ta mabhinami kaṇṭambasamipe.",
  "anya-e0602n0:266_0": "61.",
  "anya-e0602n0:267_0": "Nakhajutirajaṃ cakkaṅgopeta pādavarambujaṃ,",
  "anya-e0602n0:268_0": "Subhasirimato raṃsijālaṅgulidasasaṃsubhiṃ;",
  "anya-e0602n0:269_0": "Pavarasirasā devādevā sadā na pilandhayuṃ,",
  "anya-e0602n0:270_0": "Ta mativa manorammaṃ tittīkarā nami yassa ke.",
  "anya-e0602n0:271_0": "62.",
  "anya-e0602n0:272_0": "Buddhopyeko nidhanaguṇino vaṇṇaye yāvajīvaṃ,",
  "anya-e0602n0:273_0": "Kāmaṃ aññaṃ kathamabhaṇa māsuṃ khiyethā yukappo;",
  "anya-e0602n0:274_0": "Na tvevā yaṃ khaya mupavajje yassa vaṇṇo ananto,",
  "anya-e0602n0:275_0": "Taṃ sabbaññuṃ sakalarirī nekanāthaṃ namāmi.",
  "anya-e0602n0:276_0": "63.",
  "anya-e0602n0:277_0": "Pādidīpādaṃ dvinayanadijaṃ dhammakāyaṃ dhisoṇḍaṃ,",
  "anya-e0602n0:278_0": "Bhāṇīsoṇḍaggaṃ saraṇasirasiṃ maggāvālaṃ subhaṅgaṃ;",
  "anya-e0602n0:279_0": "Sīlālaṅkāraṃ vimalibhavu taṃ sattatiṭṭhidhidabbaṃ,",
  "anya-e0602n0:280_0": "Nāthebhindaggaṃ phalakariṇukaṃ mokkhabhojaṃ namāmi.",
  "anya-e0602n0:281_0": "64.",
  "anya-e0602n0:282_0": "Malāloḷullolaṃ atibhayajanaṃ duggasaṃsārasinduṃ,",
  "anya-e0602n0:283_0": "Phiyabbhāniggāho sivataṭamukho nāvi kajjeṭṭhanātho;",
  "anya-e0602n0:284_0": "Padappārakkāmaṃ bahujanagaṇaṃ ekamaggattaramhi,",
  "anya-e0602n0:285_0": "Samāropetvā mattari ta matulasādarañcā bhivande.",
  "anya-e0602n0:286_0": "65.",
  "anya-e0602n0:287_0": "Byāmaṃsugghanadhāra makkuḷusatabbhāṇujjalantattanaṃ,",
  "anya-e0602n0:288_0": "Ukkaṃsajjuti ketumālavicitaṃ saddhammajotindharaṃ;",
  "anya-e0602n0:289_0": "Bundinniggatapajjalanta didhitiṃ ajjatthanā yāva ca,",
  "anya-e0602n0:290_0": "Vandetaṃ muni sakyapuṅgava mahaṃ puṇṇinduvattampi ca.",
  "anya-e0602n0:291_0": "66.",
  "anya-e0602n0:292_0": "Sattamaṃtamaṃ vināsakaṃsakaṃ dadaṃ vineyyakānameva,",
  "anya-e0602n0:293_0": "Bhāvanaṃvanaṃ dhulīkaraṃ karaṃ tidukkaraṃ pajābhibhuñja;",
  "anya-e0602n0:294_0": "Gāravaṃravaṃ manoharaṃharaṃ narānarānayaṃ namāmi,",
  "anya-e0602n0:295_0": "Sādaraṃdaraṃ vinodakaṃdakaṃ pavassakaṃ pajānamiva.",
  "anya-e0602n0:296_0": "67.",
  "anya-e0602n0:297_0": "Buddho nigrodhabimbo mudukaracaraṇo brahmaghoseṇijaṅgho,",
  "anya-e0602n0:298_0": "Kosacchādaṅgajāto punarapi sugato suppatiṭṭhitapādo;",
  "anya-e0602n0:299_0": "Mudodātuṇṇalomo athamapi sugato brahmujuggattabhāvo,",
  "anya-e0602n0:300_0": "Nīlakkhī dīghapaṇhī sukhumamalachavī thomyarassaggasaggī.",
  "anya-e0602n0:301_0": "68.",
  "anya-e0602n0:302_0": "Cattālīsaggadanto samakalapanajo antaraṃsappapīṇo,",
  "anya-e0602n0:303_0": "Cakkenaṅkītapādo aviraḷadasano mārajussaṅkhapādo;",
  "anya-e0602n0:304_0": "Tiṭṭhantonomento bhayakaramudunā jaṇṇukānā masanto,",
  "anya-e0602n0:305_0": "Vaṭṭakkhandho jino gotaruṇapakhumako sīhapubbaḍḍhukāyo.",
  "anya-e0602n0:306_0": "69.",
  "anya-e0602n0:307_0": "Sattappīṇo ca dīghaṅgulaṃ matha sugato lomakūpekalomo,",
  "anya-e0602n0:308_0": "Sampannodātadāṭho kanakasamataco nīlamuddhaggalomo;",
  "anya-e0602n0:309_0": "Sambuddho thūlajivho atha sīhahanuko jālikappādahattho,",
  "anya-e0602n0:310_0": "Nātho uṇhīsasīso iti guṇasahitaṃ taṃ mahesiṃ namāmi.",
  "anya-e0602n0:311_0": "70.",
  "anya-e0602n0:312_0": "Vaṭṭacitānupubbakasubhaṅgulī ruhiramaṭṭhatuṅganakhako,",
  "anya-e0602n0:313_0": "Nigguḷagopphako samapado sīhosabhibha haṃsasannibhakamo;",
  "anya-e0602n0:314_0": "Dakkhiṇatāvatakkami samantamaṇḍala nigaṇṭhi jāṇusubhako,",
  "anya-e0602n0:315_0": "Byañjanapuṇṇaposatanu nābhigambhīra achiddadakkhiṇavaṭo.",
  "anya-e0602n0:316_0": "71.",
  "anya-e0602n0:317_0": "Dviradakarappakāsurubhujo suvibbhajanupubbamaṭṭhaanunā-",
  "anya-e0602n0:318_0": "Nunaalinānupubbarucira ttilādirahitabbisuddhatanuko;",
  "anya-e0602n0:319_0": "Dasasatakoṭi hatthibaladhāraṇo kanakatuṅganāsikasubho,",
  "anya-e0602n0:320_0": "Suruhiradantamaṃsatha sucisiniddhadasano tha lokasaraṇo.",
  "anya-e0602n0:321_0": "72.",
  "anya-e0602n0:322_0": "Suddhapasādindri ca vaṭṭataradāṭho ruhiroṭṭha ca suranaranātho,",
  "anya-e0602n0:323_0": "Āyatasobhabbadano tha muni gambhīrujukāyatasuruciralekho;",
  "anya-e0602n0:324_0": "Byāmapabhāmaṇḍalabundi supuraggaṇṇi ca āyatavisaṭasubhakkhī,",
  "anya-e0602n0:325_0": "Pañcapasādakkhi ca kuñcikasubhaggapakhumo mudutanuruṇajivho.",
  "anya-e0602n0:326_0": "73.",
  "anya-e0602n0:327_0": "Sommasiniddha tyujjalakomala varuṇavimalatanu ca amitaguṇo,",
  "anya-e0602n0:328_0": "Komala dakkhiṇāvaṭa añjanabhidasarisanilaka mudutanuruho;",
  "anya-e0602n0:329_0": "Dakkhiṇavaṭṭakomala saṇusamasunila alulita siraruhi jino,",
  "anya-e0602n0:330_0": "Sobhaṇasaṇṭhāno tha siniddhasiraruhi ca supacitasatakusala jo.",
  "anya-e0602n0:331_0": "74.",
  "anya-e0602n0:332_0": "Nigguḷonigganticchattassarisaatisubhagasira cāyatāruci kaṇṇako,",
  "anya-e0602n0:333_0": "Sosaṇṭhānassaṇhāhārānukamapahutabhamutha suāyatabbhamuko ca so;",
  "anya-e0602n0:334_0": "Suggandhaggatto muddhicātha vadani ca puthulakanalāṭa āyatasobhaṇo,",
  "anya-e0602n0:335_0": "Assāsappassāsātissaṇu dharamasamasama nami ketumālavicittakaṃ.",
  "anya-e0602n0:336_0": "75.",
  "anya-e0602n0:337_0": "Buddhuppādo kimaṅgaṃ atidulabhataraṃ ghosamattampi loke,",
  "anya-e0602n0:338_0": "Tasmā nānappakāraṃ saparahitasukhaṃ viddhasū patthayantā;",
  "anya-e0602n0:339_0": "Yātiṭṭhatthāva haṃ taṃ suranarasaraṇaṃ antarāyappahānaṃ,",
  "anya-e0602n0:340_0": "Puññakkhettekabhūtaṃ sugatamavirataṃ sādhu vandantu santo.",
  "anya-e0602n0:341_0": "76.",
  "anya-e0602n0:342_0": "Khettavaraṅgatatthutipure javapaṇama tejasā idha bhave,",
  "anya-e0602n0:343_0": "Rogabhayādyupaddavahato anunasukha bhogapuññamatiko;",
  "anya-e0602n0:344_0": "Devamanussabhogapavaraṃ paratthanubhāvañca antimabhave,",
  "anya-e0602n0:345_0": "Aññataro tibodhipavare bhavissati yathāsayaṃ katanato.",
  "anya-e0602n0:346_0": "77.",
  "anya-e0602n0:347_0": "Puññenānena sohaṃ nipuṇajavamati pemavāco sakhīlo,",
  "anya-e0602n0:348_0": "Saddho kalyāṇamittotisaraṇagamano sīlavā cāgayogo;",
  "anya-e0602n0:349_0": "Hirottappī sudakkho avitasucarito dhitimā saccabhāṇī,",
  "anya-e0602n0:350_0": "Bāhussacci vibhāgi saparahitakaro vaggurāvo bhirupo.",
  "anya-e0602n0:351_0": "78.",
  "anya-e0602n0:352_0": "Dīghajjīvi nirogo sucikulapassuto dhammaratto viratto,",
  "anya-e0602n0:353_0": "Niccāpalyo kataññu atimudujumano sādhubhāvādiviññū;",
  "anya-e0602n0:354_0": "Dhammājīvo bhaveyyaṃ bahukusalarato appakodho aluddho,",
  "anya-e0602n0:355_0": "Evañcaññaṃ kareyyaṃ paṇidhi carimake mokkhanibbānabhāgī.",
  "anya-e0602n0:356_0": "79.",
  "anya-e0602n0:357_0": "(1) Mahākathaṃ buddhaghoso, tanumeva karaṃapi;",
  "anya-e0602n0:358_0": "Cajaṃ heyyā diyā deyyaṃ, akarittha yathā tathā.",
  "anya-e0602n0:359_0": "80.",
  "anya-e0602n0:360_0": "(2) Mahāpaṇāmaporāṇaṃ, kiñci eva punappunaṃ;",
  "anya-e0602n0:361_0": "Kāmokkamaṃ dudhārañca, cajaṃ deyyā diyaññattha.",
  "anya-e0602n0:362_0": "81.",
  "anya-e0602n0:363_0": "(3) Sutajjaya anubhava-ṭṭhapanatthena lañchinā;",
  "anya-e0602n0:364_0": "Sutena garunānena, katoyaṃ paṇāmo navo.",
  "anya-e0602n0:365_0": "82.",
  "anya-e0602n0:366_0": "(4) Ekakkharāya gāthāyo, yāva chabbisatakkharā;",
  "anya-e0602n0:367_0": "Jātiya pajjasattatyā, saṅkhato caturādhikā.",
  "anya-e0602n0:368_0": "83.",
  "anya-e0602n0:369_0": "(5) Aṭṭhādhikā sahevuyyo- janādīhi midaṃ nataṃ;",
  "anya-e0602n0:370_0": "Yathāvuttatthakā kāmā, ye niccaṃ dhārayantu te.",
  "anya-e0602n0:371_0": "84.",
  "anya-e0602n0:372_0": "Rājātirājātimanoharo yo,",
  "anya-e0602n0:373_0": "Devātidevātiguṇoghadhārī;",
  "anya-e0602n0:374_0": "Brahmātibrahmātibhavantagū taṃ,",
  "anya-e0602n0:375_0": "Saṅghātisaṅghātivirāva vande.",
  "anya-e0602n0:376_0": "85.",
  "anya-e0602n0:377_0": "Anaṅganaṅgaṃ naradevadevaṃ,",
  "anya-e0602n0:378_0": "Aniñjaniñjaṃ bhayatāṇatāṇaṃ;",
  "anya-e0602n0:379_0": "Anaṇḍanaṇḍañca anāthanāthaṃ,",
  "anya-e0602n0:380_0": "Khayantayantaṃ paṇamāmi māmi.",
  "anya-e0602n0:381_0": "86.",
  "anya-e0602n0:382_0": "Tambasiniddhatuṅganakhako nuṃvaṭṭasucituraṅguli ca muniso,",
  "anya-e0602n0:383_0": "Sīhusabhobhahaṃsasamago nigūḷasama gopphakāyatamukho;",
  "anya-e0602n0:384_0": "Komaladakkhāṇāvaṭatanuruho sucimalujjalābhasariro,",
  "anya-e0602n0:385_0": "Pañcapasādayuttanayano sugandhamukhatuṅganāsikayuto.",
  "anya-e0602n0:386_0": "87.",
  "anya-e0602n0:387_0": "Koṭisahassanāgabaliko surattamadharo suvaṭṭadasano,",
  "anya-e0602n0:388_0": "Āyatasaṇulomabhamūko muduttanukaratta jivhasahito;",
  "anya-e0602n0:389_0": "Chattasamānasobhaṇasiro sukesavara ketumālavicito,",
  "anya-e0602n0:390_0": "Iccanubyañjanebhi sahitaṃ munindapavaraṃ namāmi sirasā.",
  "anya-e0602n0:391_0": "88.",
  "anya-e0602n0:392_0": "Sakalamalehi so muni sudūratāya ca malāriniṃ hatatayā,",
  "anya-e0602n0:393_0": "Tibhavarathe samānitamanārakāni ca namālayo naravaro;",
  "anya-e0602n0:394_0": "Malakaraṇe rahāraha manantañeyya mabhijānanā muni tathā,",
  "anya-e0602n0:395_0": "Caraṇayuto tivijji ca suvācatā sugamanā janesu sugato.",
  "anya-e0602n0:396_0": "89.",
  "anya-e0602n0:397_0": "Lokavidū so nitalokatayatā sākalato asamanaradamā so,",
  "anya-e0602n0:398_0": "Sārathi jino anusāsanakaro satthavaho dupathataraṇasattā;",
  "anya-e0602n0:399_0": "Bujjhati sāmaṃ catusaccamakhilaṃ bodhayi jantugaṇamiti ca buddho,",
  "anya-e0602n0:400_0": "Bhākaraābhāphuṭapaṅkajasamo maggiyañāṇaphuvikasito ca.",
  "anya-e0602n0:401_0": "90.",
  "anya-e0602n0:402_0": "Bhaggakileso so bhagavā tibhava vamita gamana sujana bhajanato,",
  "anya-e0602n0:403_0": "So bhaji saddhamme pavibhatta sarasa chabhagayuta garukaraṇiyato;",
  "anya-e0602n0:404_0": "Sattanikāye kenapitulyaguṇamapamita sirighaṃnajutisusubhaṃ,",
  "anya-e0602n0:405_0": "Devanarānaṃ ekapatiṭṭha mavitathutiyasa masaki mabhaṃname.",
  "anya-e0602n0:406_0": "91.",
  "anya-e0602n0:407_0": "Buddhuppādo kimmaṅgaṃ bho atidulabhataramidha bhave sughosa mapāparo,",
  "anya-e0602n0:408_0": "Tasmā patthentā sabbaññuṃ vividhahitasukha manadhikaṃ namantu ca sādhavo;",
  "anya-e0602n0:409_0": "Puññenānenete diṭṭhe bhayaaghaṃpīḷanaṭṭha virahitā parattha cubho subhe,",
  "anya-e0602n0:410_0": "Bhutvānante ve hessante avikalasukhasirimatikā anuttara bhāgino.",
  "anya-e0602n0:411_0": "92.",
  "anya-e0602n0:412_0": "So cakkopetapādo mudubhujacaraṇo suppatiṭṭhitapādo,",
  "anya-e0602n0:413_0": "Eṇījaṅgho ca buddho kanakanibhataco āyatapaṇhi nātho;",
  "anya-e0602n0:414_0": "Kosonaddhaṅgajāto atisudhumachavī jālikappānaheṭṭhā,",
  "anya-e0602n0:415_0": "Ussaṅkhapādayutto abhinilanayano āyataṅguliyogo.",
  "anya-e0602n0:416_0": "93.",
  "anya-e0602n0:417_0": "Ṭhito kho no namanto kirubhayaputhunājāṇuyo āmasanto,",
  "anya-e0602n0:418_0": "Lomakūpekekalomo samataladasano añjanuddhaggalomo;",
  "anya-e0602n0:419_0": "Brahmaddehujjugatto aviraḷamukhato sattakaṅgussado so,",
  "anya-e0602n0:420_0": "Nigrodhappāribimbo migapatihanuko sīhapubbaḍḍhakāyo.",
  "anya-e0602n0:421_0": "94.",
  "anya-e0602n0:422_0": "Puṇṇattālīsadanto supahutarasano sobhaṇodātadāṭho,",
  "anya-e0602n0:423_0": "Saṇhodātuṇṇalomo samavaṭalagalo antaraṃsapiṇo so;",
  "anya-e0602n0:424_0": "Brahmagghoso munindo punapi gupakhumo uṇhisasamphullasīso,",
  "anya-e0602n0:425_0": "Bāttiṃsaṅgopasobhaṃ mudurasahaṇī lokajeṭṭhaṃ name taṃ.",
  "anya-e0602n0:426_0": "Mahāpaṇāma niṭṭhitā.",
  "anya-e0602n0:427_0": "Tigumbacetiya thomanā",
  "anya-e0602n0:428_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n0:429_0": "1.",
  "anya-e0602n0:430_0": "Yo dīpaṅkaramūlamhi, padaṃ hattagataṃ caji;",
  "anya-e0602n0:431_0": "Sammāsambodhi mākaṅkhaṃ, vande tassa siroruhaṃ.",
  "anya-e0602n0:432_0": "(Pathyāvattagāthā).",
  "anya-e0602n0:433_0": "2.",
  "anya-e0602n0:434_0": "Pūretvā bodhisambhāra-mahesaṃ yo anuttaraṃ;",
  "anya-e0602n0:435_0": "Alattha buddhattaṃ tassa, kesadhātuvaraṃ name.",
  "anya-e0602n0:436_0": "(Pathyāvattagāthā).",
  "anya-e0602n0:437_0": "3.",
  "anya-e0602n0:438_0": "Laddhā buddhattaṃ chaṭhāna-matikkamma pavedayi;",
  "anya-e0602n0:439_0": "Vimuttiṃ rājāyatane, tassa kesavaraṃ name.",
  "anya-e0602n0:440_0": "(Rakāra bhakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:441_0": "4.",
  "anya-e0602n0:442_0": "Tattha sakkadattiyampi, nāgalataṃ harītakaṃ;",
  "anya-e0602n0:443_0": "Anotattodakaṃ bhuñji, vande tassa siroruhaṃ.",
  "anya-e0602n0:444_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:445_0": "5.",
  "anya-e0602n0:446_0": "Tadā muggaselapattaṃ, mahārājūhi dinnakaṃ;",
  "anya-e0602n0:447_0": "Tathāgato paṭiggaṇhi, vandāmi tassa sīsajaṃ.",
  "anya-e0602n0:448_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:449_0": "6.",
  "anya-e0602n0:450_0": "Tadā dvinnaṃ dvebhātika-janehi madhupiṇḍikaṃ;",
  "anya-e0602n0:451_0": "Paribhuñjesi manthampi, tassa sīsasiriṃ name.",
  "anya-e0602n0:452_0": "(Takāravipulā pathyāvattagāthā).",
  "anya-e0602n0:453_0": "7.",
  "anya-e0602n0:454_0": "Yo tapussabhallikānaṃ, tadā dvisaraṇaṃ adā;",
  "anya-e0602n0:455_0": "Lokamhi sabbapaṭhamaṃ, tassa sīrivahaṃ name.",
  "anya-e0602n0:456_0": "(Rakāra nakāra vipulāpathyāvattagāthā).",
  "anya-e0602n0:457_0": "8.",
  "anya-e0602n0:458_0": "Tadā tatthupaṭṭhakānaṃ, tesaṃ kese adā aṭha;",
  "anya-e0602n0:459_0": "Lokahita mapekkhanto, nātho yo tassa te name.",
  "anya-e0602n0:460_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:461_0": "9.",
  "anya-e0602n0:462_0": "Tepi taṃ āhāritvāna, pokkharabbatiyaṃ karuṃ;",
  "anya-e0602n0:463_0": "Sajīvakesa cetiyaṃ, nametaṃ sabbapubbakaṃ.",
  "anya-e0602n0:464_0": "(Makāravipulā pathyāvattagāthā).",
  "anya-e0602n0:465_0": "10.",
  "anya-e0602n0:466_0": "Uposathuposathamhi, muñcantaṃ nīlarasmiyo;",
  "anya-e0602n0:467_0": "Bhagavāva lokaatthaṃ, karontaṃ taṃ sadā name.",
  "anya-e0602n0:468_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:469_0": "11.",
  "anya-e0602n0:470_0": "Cūḷāmaṇidussacetyaṃ, kālamhi bodhisattake;",
  "anya-e0602n0:471_0": "Buddhakāle idaṃ sabba-paṭhamaṃ taṃ namāmahaṃ.",
  "anya-e0602n0:472_0": "(Rakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:473_0": "12.",
  "anya-e0602n0:474_0": "Namāmahaṃ vandāmahaṃ, pūjemahaṃ siroruhaṃ;",
  "anya-e0602n0:475_0": "Puññamidaṃ bhavatu me, paccayo āsavakkhaye.",
  "anya-e0602n0:476_0": "(Takāra nakāravipulā pathyāvattagāthā).",
  "anya-e0602n0:477_0": "Tigumbacetiyathomanā niṭṭhitā.",
  "anya-e0602n0:478_0": "Vāsamālinīkya",
  "anya-e0602n0:479_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n0:480_0": "1.",
  "anya-e0602n0:481_0": "Vuḍḍhopi jinānaṃ, buddhosi vijānaṃ;",
  "anya-e0602n0:482_0": "Pubboditi māhaṃ, kubbomi vimānaṃ.",
  "anya-e0602n0:483_0": "(Tanumajjhāgāthā)",
  "anya-e0602n0:484_0": "2.",
  "anya-e0602n0:485_0": "Mahāsamatakūlaṃ, narāpavarapūjaṃ;",
  "anya-e0602n0:486_0": "Jahā abhayapūraṃ, namā kanakarūpaṃ.",
  "anya-e0602n0:487_0": "(Kumāralalitāgāthā)",
  "anya-e0602n0:488_0": "3.",
  "anya-e0602n0:489_0": "Narāsabhasubuddhaṃ, pajāmatanuruttaṃ;",
  "anya-e0602n0:490_0": "Dayākaramuduttaṃ, namāma ha usukkaṃ.",
  "anya-e0602n0:491_0": "(Kumāralalitāgāthā)",
  "anya-e0602n0:492_0": "4.",
  "anya-e0602n0:493_0": "Hitaṃ vahasusīlo, pamodati sukhatte;",
  "anya-e0602n0:494_0": "Name tamapabuddhaṃ, jinaṃ gatasukhantaṃ.",
  "anya-e0602n0:495_0": "(Kumāralalitāgāthā)",
  "anya-e0602n0:496_0": "5.",
  "anya-e0602n0:497_0": "Bandhu ca santakileso, yo pitavaṇṇapabhāso;",
  "anya-e0602n0:498_0": "Gotamagottasuññato, tassa namo narasīho.",
  "anya-e0602n0:499_0": "(Citrapadāgāthā)",
  "anya-e0602n0:500_0": "6.",
  "anya-e0602n0:501_0": "Buddhaṃ suddhaṃ lokesītaṃ, ukkaṃ yuttaṃ yoge haṃ;",
  "anya-e0602n0:502_0": "Vantātītaṃ oghe sīdaṃ, vandāpīhaṃ sokehīhaṃ.",
  "anya-e0602n0:503_0": "(Vijjummālāgāthā)",
  "anya-e0602n0:504_0": "7.",
  "anya-e0602n0:505_0": "Bhogavatī yopakhamī, sītadayā lokasakhā;",
  "anya-e0602n0:506_0": "Dhātutaye kitti sa ve, dātu jaye-tassa ca me;",
  "anya-e0602n0:507_0": "(Māṇavakagāthā)",
  "anya-e0602n0:508_0": "8.",
  "anya-e0602n0:509_0": "Mānito lukho rutotha, sannibho subho sukho ca;",
  "anya-e0602n0:510_0": "Jānito dharo namo ca, tassa yo thuto guṇova.",
  "anya-e0602n0:511_0": "(Samānikāgāthā)",
  "anya-e0602n0:512_0": "9.",
  "anya-e0602n0:513_0": "Jayaṃ dhajaṃ pajāpuge, ṭhitaṃ lilaṃ mahāsukhe;",
  "anya-e0602n0:514_0": "Subhaṃ phuṭaṃ pabhaṃ name, hitaṃ sukhaṃ dadātu me.",
  "anya-e0602n0:515_0": "(Pamāṇikāgāthā)",
  "anya-e0602n0:516_0": "10.",
  "anya-e0602n0:517_0": "Puṇṇapuññajanitasubhaṃ, jātiñātithutiyaguṇaṃ;",
  "anya-e0602n0:518_0": "Bhedaveravimalajinaṃ, ñāṇapādacaraṇa-mahaṃ.",
  "anya-e0602n0:519_0": "(Halamukhīgāthā)",
  "anya-e0602n0:520_0": "11.",
  "anya-e0602n0:521_0": "Sati mati suci yo-bhāso, thuti muni sukhito kāyo;",
  "anya-e0602n0:522_0": "Manujapumasuto nātho, jayavara mu-sabho dāto.",
  "anya-e0602n0:523_0": "(Bhujagasusugāthā)",
  "anya-e0602n0:524_0": "12.",
  "anya-e0602n0:525_0": "Yo buddho pavaro lilo puge,",
  "anya-e0602n0:526_0": "Lokutto abhayo ṭhito sukhe;",
  "anya-e0602n0:527_0": "Uttiṇṇaṃ nisabhaṃ hitaṃ vahe,",
  "anya-e0602n0:528_0": "Monindaṃ vimalaṃ jinaṃ name.",
  "anya-e0602n0:529_0": "(Suddhavirājitagāthā)",
  "anya-e0602n0:530_0": "13.",
  "anya-e0602n0:531_0": "Devindaṃ varagaṇatherindaṃ,",
  "anya-e0602n0:532_0": "Niṭṭhānaṃ bhavajananibbānaṃ;",
  "anya-e0602n0:533_0": "Niddosaṃ raṇarajanipphoṭaṃ,",
  "anya-e0602n0:534_0": "Vande-haṃ subhamukhasoṇṇemaṃ.",
  "anya-e0602n0:535_0": "(Paṇavagāthā)",
  "anya-e0602n0:536_0": "14.",
  "anya-e0602n0:537_0": "Gotamagotte ketuva ñātaṃ,",
  "anya-e0602n0:538_0": "Lokajakhette meruva jātaṃ;",
  "anya-e0602n0:539_0": "Thandilajeṭṭhe bheditamāraṃ,",
  "anya-e0602n0:540_0": "Paṇḍitamajjhe medhiva bhāṇaṃ;",
  "anya-e0602n0:541_0": "Mantiya vande sevitanāthaṃ.",
  "anya-e0602n0:542_0": "(Rummavatīgāthā)",
  "anya-e0602n0:543_0": "15.",
  "anya-e0602n0:544_0": "Buddho sukko amitaguṇīso,",
  "anya-e0602n0:545_0": "Yutto mutto sasiva timīto;",
  "anya-e0602n0:546_0": "Khe yo tejo tapasiva akko,",
  "anya-e0602n0:547_0": "Phelo theto tava namakāro.",
  "anya-e0602n0:548_0": "(Mattāgāthā)",
  "anya-e0602n0:549_0": "16.",
  "anya-e0602n0:550_0": "Yo jitamāre ve aji sabbaṃ,",
  "anya-e0602n0:551_0": "Tho mitasāre he-dhitapattaṃ;",
  "anya-e0602n0:552_0": "Saṃsitapuṇṇo so nami tassa,",
  "anya-e0602n0:553_0": "Paṇḍitaphullo so matikassa.",
  "anya-e0602n0:554_0": "(Campakamālāgāthā)",
  "anya-e0602n0:555_0": "17.",
  "anya-e0602n0:556_0": "Kanakarūpa mūpameyyakaṃ,",
  "anya-e0602n0:557_0": "Pavarasūra pūjasevataṃ;",
  "anya-e0602n0:558_0": "Kamalabhūma dhūradesakaṃ,",
  "anya-e0602n0:559_0": "Naramarūpa rū name ta-haṃ.",
  "anya-e0602n0:560_0": "(Manoramāgāthā)",
  "anya-e0602n0:561_0": "18.",
  "anya-e0602n0:562_0": "Deve gate dvevārā gamāsi,",
  "anya-e0602n0:563_0": "Sele cale ye ñātā pacāyi;",
  "anya-e0602n0:564_0": "Uddhaṃ tale tevāsaṃ akāsi,",
  "anya-e0602n0:565_0": "Buddhaṃ mate esāhaṃ namāmi.",
  "anya-e0602n0:566_0": "(Ubbhāsakantagāthā)",
  "anya-e0602n0:567_0": "19.",
  "anya-e0602n0:568_0": "Ukke sunutaṃ puthukañca theraṃ,",
  "anya-e0602n0:569_0": "Vutte sukhumaṃ ujukaṃ tathetaṃ;",
  "anya-e0602n0:570_0": "Dibbe paṭimaṃ kiriyaṃ vadetaṃ,",
  "anya-e0602n0:571_0": "Iddhe mahitaṃ kathitaṃ namehaṃ.",
  "anya-e0602n0:572_0": "(Upaṭṭhitagāthā)",
  "anya-e0602n0:573_0": "20. Dibbassa pūre pavarehi gutto,",
  "anya-e0602n0:574_0": "Siddhattha bhūte nagarehi vuṭṭho;",
  "anya-e0602n0:575_0": "Saṅkassa pūre ma-gaṇehi buddho,",
  "anya-e0602n0:576_0": "Aññattha pūje paname ni kubbo.",
  "anya-e0602n0:577_0": "(Indavajirāgāthā)",
  "anya-e0602n0:578_0": "21.",
  "anya-e0602n0:579_0": "Subhaṃ thutaṃ yo rajataṃ balatthaṃ,",
  "anya-e0602n0:580_0": "Yugaṃ hutaṃ so kanakaṃ kamatthaṃ;",
  "anya-e0602n0:581_0": "Citaṃ ṭhitaṃ lohitakaṃ manāpaṃ,",
  "anya-e0602n0:582_0": "Lilaṃ itaṃ soraci taṃ namāhaṃ.",
  "anya-e0602n0:583_0": "(Upendavajirāgāthā)",
  "anya-e0602n0:584_0": "22.",
  "anya-e0602n0:585_0": "Pinitaṃ viṇaṃ sakhilaṃ yaji taṃ,",
  "anya-e0602n0:586_0": "Susukhaṃ dhujaṃ biluvaṃ niyutaṃ;",
  "anya-e0602n0:587_0": "Ṭhapiyaṃ simaṃ thunutaṃ puthulaṃ,",
  "anya-e0602n0:588_0": "Nami haṃ khiṇaṃ sukhumaṃ mudukaṃ.",
  "anya-e0602n0:589_0": "(Sumukhīgāthā)",
  "anya-e0602n0:590_0": "23.",
  "anya-e0602n0:591_0": "Sogati bodhayiṃ gāhiya pattaṃ,",
  "anya-e0602n0:592_0": "Otari sonami jānita atthaṃ;",
  "anya-e0602n0:593_0": "Bhūpati pūjayi sākiya vaṃsaṃ,",
  "anya-e0602n0:594_0": "Sūjadhi ūpadhi bhāsita dhammaṃ.",
  "anya-e0602n0:595_0": "(Dodhakagāthā)",
  "anya-e0602n0:596_0": "24.",
  "anya-e0602n0:597_0": "Cattāro-me yācite so pavutthe,",
  "anya-e0602n0:598_0": "Laddhā bhoge kāmite oghamutte;",
  "anya-e0602n0:599_0": "Kattā tose-taṃ name colayutte,",
  "anya-e0602n0:600_0": "Tatthā-loke taṃpate kho padukke.",
  "anya-e0602n0:601_0": "(Sālinīgāthā)",
  "anya-e0602n0:602_0": "25.",
  "anya-e0602n0:603_0": "Sattā-loko sarito yo dhajukkaṃ,",
  "anya-e0602n0:604_0": "Tatthā-gopo raciyo-noja-muddhaṃ;",
  "anya-e0602n0:605_0": "Bhaddā-soko-pacito-bho pabuddhaṃ,",
  "anya-e0602n0:606_0": "Saddhāyogo bhaji so-ho-namuccaṃ.",
  "anya-e0602n0:607_0": "(Vātompīgāthā)",
  "anya-e0602n0:608_0": "26.",
  "anya-e0602n0:609_0": "Ñātamarūnaṃ upari ṭhitānaṃ,",
  "anya-e0602n0:610_0": "Vālapasūkaṃ huvati jinānaṃ;",
  "anya-e0602n0:611_0": "Devasuyāmo jinamiti ñāto,",
  "anya-e0602n0:612_0": "Tena sukhā-bho vinami idā so.",
  "anya-e0602n0:613_0": "(Sirīgāthā)",
  "anya-e0602n0:614_0": "27.",
  "anya-e0602n0:615_0": "Puṇṇakena kusumena sevataṃ,",
  "anya-e0602n0:616_0": "Kuñjareva thunutena khe gataṃ;",
  "anya-e0602n0:617_0": "Sundarena nami tena me jayaṃ,",
  "anya-e0602n0:618_0": "Puññatejakari-dhesa ve dadaṃ.",
  "anya-e0602n0:619_0": "(Rathoddhatāgāthā)",
  "anya-e0602n0:620_0": "28.",
  "anya-e0602n0:621_0": "Mātu āyu khiṇu-ke iha pubbe,",
  "anya-e0602n0:622_0": "Tāsu sādhu visute-disakucce;",
  "anya-e0602n0:623_0": "Vāta tāla khaciteni-dha soṇṇe,",
  "anya-e0602n0:624_0": "“Tāta tāta” yaji te-tisa vande.",
  "anya-e0602n0:625_0": "(Svāgatagāthā)",
  "anya-e0602n0:626_0": "29.",
  "anya-e0602n0:627_0": "Upari kamalayoni sobhitaṃ,",
  "anya-e0602n0:628_0": "Juhati dhavalajoti-dositaṃ;",
  "anya-e0602n0:629_0": "Sukari ya-matabodhi-mocitaṃ,",
  "anya-e0602n0:630_0": "Sunami caraṇaloki-dho-rimaṃ.",
  "anya-e0602n0:631_0": "(Bhaddikāgāthā)",
  "anya-e0602n0:632_0": "30.",
  "anya-e0602n0:633_0": "Vane jino yo vinayaṃ supekkhi-maṃ,",
  "anya-e0602n0:634_0": "Mate ṭhito-bho dijakaṃ dubajjitaṃ;",
  "anya-e0602n0:635_0": "Aghe-nidho khobhi-taraṃ mune-cchi-daṃ,",
  "anya-e0602n0:636_0": "Name-bhito bodhimahaṃ lukha-jjhitaṃ.",
  "anya-e0602n0:637_0": "(Vaṃsaṭṭhagāthā)",
  "anya-e0602n0:638_0": "31.",
  "anya-e0602n0:639_0": "Yo jāti-domānī-mupāsi lambi taṃ,",
  "anya-e0602n0:640_0": "Kodhehi lokehi dubhāsi paṇḍitaṃ;",
  "anya-e0602n0:641_0": "Pūrepi mūlepi pahāsi diṭṭhikaṃ,",
  "anya-e0602n0:642_0": "Sabbehi pattehi namāmi icchitaṃ.",
  "anya-e0602n0:643_0": "(Indavaṃsāgāthā)",
  "anya-e0602n0:644_0": "32.",
  "anya-e0602n0:645_0": "Verañjake pūravare vibhūsite,",
  "anya-e0602n0:646_0": "Nelañjane dūmavane vikūjite;",
  "anya-e0602n0:647_0": "Khemaṅkare thūlatare vidū site,",
  "anya-e0602n0:648_0": "Eta-ṅgame pūna name virūpi ve.",
  "anya-e0602n0:649_0": "(Indavaṃsāgāthā)",
  "anya-e0602n0:650_0": "33.",
  "anya-e0602n0:651_0": "Adhunāpi sa sārisuto nimalaṃ,",
  "anya-e0602n0:652_0": "Tamupāsi matāpi kuto ci nayaṃ;",
  "anya-e0602n0:653_0": "Karuṇāyi dha yāci budho vinayaṃ,",
  "anya-e0602n0:654_0": "Garukāpi namāmi su-yo jita-haṃ.",
  "anya-e0602n0:655_0": "(Toṭakagāthā)",
  "anya-e0602n0:656_0": "34.",
  "anya-e0602n0:657_0": "Janavaro muni so sarito vane,",
  "anya-e0602n0:658_0": "Vasabhato udito-pari gotame;",
  "anya-e0602n0:659_0": "Gamanaso guṇiko gami-to name,",
  "anya-e0602n0:660_0": "Nagara-do juti-mo ghatito-sathe.",
  "anya-e0602n0:661_0": "(Dutavilambitagāthā)",
  "anya-e0602n0:662_0": "35.",
  "anya-e0602n0:663_0": "Bhagavati kuṭigāre yo nisinne,",
  "anya-e0602n0:664_0": "Dhanavati suvisāle-ko isinde;",
  "anya-e0602n0:665_0": "Ya-malabhi muni lābhe molichinne,",
  "anya-e0602n0:666_0": "Sa panami juti-māse-to kilinne.",
  "anya-e0602n0:667_0": "(Puṭagāthā)",
  "anya-e0602n0:668_0": "36.",
  "anya-e0602n0:669_0": "Paṭhapita-miccassa sidatu sabbaṃ,",
  "anya-e0602n0:670_0": "Paṭhami-dha sikkhassa hitasukhatthaṃ;",
  "anya-e0602n0:671_0": "Pavadiya giddhassa khiṇalukhatthaṃ,",
  "anya-e0602n0:672_0": "Panami ca kiccassa sikhamukappaṃ.",
  "anya-e0602n0:673_0": "(Kusumavicittāgāthā)",
  "anya-e0602n0:674_0": "37.",
  "anya-e0602n0:675_0": "Nilobhāsi dhūmehi yu-cco vilāse,",
  "anya-e0602n0:676_0": "Ṭhito cā-bhi bhū tehi rukkho-digāhe;",
  "anya-e0602n0:677_0": "Yi-to tāni pūrepi luddho dvivāre,",
  "anya-e0602n0:678_0": "Jino-kāsi pūjemi buddho hitā-se.",
  "anya-e0602n0:679_0": "(Bhujaṅgappayātagāthā)",
  "anya-e0602n0:680_0": "38.",
  "anya-e0602n0:681_0": "Janarame dasasare visālake,",
  "anya-e0602n0:682_0": "Munivare kuṭighare-riyāpathe;",
  "anya-e0602n0:683_0": "Dhutatare-subhakathe caji sa ve,",
  "anya-e0602n0:684_0": "Tatiyake-ta-midha ve ṭhapi name.",
  "anya-e0602n0:685_0": "(Piyaṃvadāgāthā)",
  "anya-e0602n0:686_0": "39.",
  "anya-e0602n0:687_0": "Vesālike tu vasi kātu cātukaṃ,",
  "anya-e0602n0:688_0": "Te ñāhi tesu labhi-dhā-mukā-mukaṃ;",
  "anya-e0602n0:689_0": "Negāmikesu bhaji phāsu sā-yukaṃ,",
  "anya-e0602n0:690_0": "Etā-dhikesu nami-kāsu-dā-tulaṃ.",
  "anya-e0602n0:691_0": "(Lalitāgāthā)",
  "anya-e0602n0:692_0": "40.",
  "anya-e0602n0:693_0": "Vadi suppiyo duvacanaṃ tamato,",
  "anya-e0602n0:694_0": "Sahi muttiko guṇakathaṃ tathato;",
  "anya-e0602n0:695_0": "Gami māṇavo durapathaṃ carato,",
  "anya-e0602n0:696_0": "Nami sādhavo budhavaraṃ paraso.",
  "anya-e0602n0:697_0": "(Pamitakkharāgāthā)",
  "anya-e0602n0:698_0": "41.",
  "anya-e0602n0:699_0": "Yu-pagami vimalo sakhilo tadā,",
  "anya-e0602n0:700_0": "Yuvavati-pivano rami yo brahmā;",
  "anya-e0602n0:701_0": "Ekasayi ṭhitato kathi kho guṇe,",
  "anya-e0602n0:702_0": "Esa nami jina-mo padhi-do-juke.",
  "anya-e0602n0:703_0": "(Ujjalāgāthā)",
  "anya-e0602n0:704_0": "42.",
  "anya-e0602n0:705_0": "Jānaṃ sabbesaṃ desi yo kho-dhimuttaṃ,",
  "anya-e0602n0:706_0": "Ānandattheraṃ vedito coḷisuttaṃ;",
  "anya-e0602n0:707_0": "Kāyassammukhe kātuno-lokiyaṃ-se,",
  "anya-e0602n0:708_0": "Ṭhāna-ssa-ppuge kāruṇo hoti vande.",
  "anya-e0602n0:709_0": "(Vessadevī gāthā)",
  "anya-e0602n0:710_0": "43.",
  "anya-e0602n0:711_0": "Sukathiya majjhimasīla-maparaṃ,",
  "anya-e0602n0:712_0": "Yu-pacita-metthi-dha cīra-manayaṃ;",
  "anya-e0602n0:713_0": "Budhayi ca bhajjita-mīṇavataraṃ,",
  "anya-e0602n0:714_0": "Sunami pavajjita-mīha-mamalaṃ.",
  "anya-e0602n0:715_0": "(Tāmarasagāthā)",
  "anya-e0602n0:716_0": "44.",
  "anya-e0602n0:717_0": "Mahakañhi sīlampi abhāsi kante,",
  "anya-e0602n0:718_0": "Brahmathandilī mamhi manāpi ramme;",
  "anya-e0602n0:719_0": "Calakampi gīrampi kadāci ambe,",
  "anya-e0602n0:720_0": "Varapaṇḍi khīṇampi namāmi taṃ ve.",
  "anya-e0602n0:721_0": "(Kamalāgāthā)",
  "anya-e0602n0:722_0": "45.",
  "anya-e0602n0:723_0": "Mohante jini paṭhame jaye jitāyaṃ,",
  "anya-e0602n0:724_0": "Soramme isipatane vane nivāsaṃ.",
  "anya-e0602n0:725_0": "Khobhante kiri sakale vade vilāsaṃ,",
  "anya-e0602n0:726_0": "Ghoraṃve vinidamane name jinā-haṃ.",
  "anya-e0602n0:727_0": "(Pahāsinīgāthā)",
  "anya-e0602n0:728_0": "46.",
  "anya-e0602n0:729_0": "Divārakaṃ bajanagaraṃ phitaṃ vase,",
  "anya-e0602n0:730_0": "Nisāya taṃ janagaṇanaṃ ṭhitaṃ mate;",
  "anya-e0602n0:731_0": "Vijānakaṃ tamajaṭakaṃ sitaṃ vane,",
  "anya-e0602n0:732_0": "Hitāvahaṃ narapavaraṃ imaṃ name.",
  "anya-e0602n0:733_0": "(Ruciragāthā)",
  "anya-e0602n0:734_0": "47.",
  "anya-e0602n0:735_0": "Racita-maviralaṃ manussa mathā paṇaṃ,",
  "anya-e0602n0:736_0": "Pasiya tatiyakaṃ catuttha makā sayaṃ;",
  "anya-e0602n0:737_0": "Karita-madhikataṃ akhubbhamalā sabhaṃ,",
  "anya-e0602n0:738_0": "Jahitagatiparaṃ panujja namāma-haṃ.",
  "anya-e0602n0:739_0": "(Parājitāgāthā)",
  "anya-e0602n0:740_0": "48.",
  "anya-e0602n0:741_0": "Nagara-majaya-mesa nivasi tha pare,",
  "anya-e0602n0:742_0": "Mahati sa maṇike sakuṇakujavane;",
  "anya-e0602n0:743_0": "Yapati vasati ve hitasivavahane,",
  "anya-e0602n0:744_0": "Surata mubhayame-sita mima paname.",
  "anya-e0602n0:745_0": "(Paharaṇakalikāgāthā)",
  "anya-e0602n0:746_0": "49.",
  "anya-e0602n0:747_0": "Chaṭṭhaṃ vase athu-da tattha vane mune saṃ,",
  "anya-e0602n0:748_0": "Sabbaṃ dhare makulapabbatake upedaṃ;",
  "anya-e0602n0:749_0": "Cattaṃ male manuja matthavase sudesaṃ,",
  "anya-e0602n0:750_0": "Bhattaṃ name lahuka mappa mare dhune taṃ.",
  "anya-e0602n0:751_0": "(Vasantatilakagāthā)",
  "anya-e0602n0:752_0": "50.",
  "anya-e0602n0:753_0": "Nuna upavasati idha tha puna parime,",
  "anya-e0602n0:754_0": "Sukhaguṇamahati tidasapura ajite;",
  "anya-e0602n0:755_0": "Yuganuta mavadi vitatha mughatari ve,",
  "anya-e0602n0:756_0": "Hutathuna manami simada tula mariye.",
  "anya-e0602n0:757_0": "(Sasikalāgāthā)",
  "anya-e0602n0:758_0": "51.",
  "anya-e0602n0:759_0": "Jinapati susumāraṃ bhesakallāvane-saṃ,",
  "anya-e0602n0:760_0": "Nivasati puthuñāṇaṃ khve-sa nandālaye-taṃ;",
  "anya-e0602n0:761_0": "Vimala-mi dhu-jukāyaṃ bhedasantāpa-sesaṃ,",
  "anya-e0602n0:762_0": "Vijaha-pi sukhumālaṃ esamantā name-haṃ.",
  "anya-e0602n0:763_0": "(Mālinīgāthā)",
  "anya-e0602n0:764_0": "52.",
  "anya-e0602n0:765_0": "Mahati sukantiye atha ca tattha sītale,",
  "anya-e0602n0:766_0": "Vasati kusambiye navamavassa-pī-tare;",
  "anya-e0602n0:767_0": "Avahi sukha-ntime pajaha-mattha-mī-dha ve,",
  "anya-e0602n0:768_0": "Panami nudaṃ hine sakalasatthavasaye.",
  "anya-e0602n0:769_0": "(Pabhaddakagāthā)",
  "anya-e0602n0:770_0": "53.",
  "anya-e0602n0:771_0": "Yudhavati pālileyyaka vane pahāya nāge,",
  "anya-e0602n0:772_0": "Upaṭhahi nāgi-dhe-sa dasame jahāya bāle;",
  "anya-e0602n0:773_0": "Sukhavasi kāyike ca manake tadāsa sāte,",
  "anya-e0602n0:774_0": "Yuta-madhi vāhite ca paname payāta māre.",
  "anya-e0602n0:775_0": "(Vāṇinīgāthā)",
  "anya-e0602n0:776_0": "54.",
  "anya-e0602n0:777_0": "Ito patte nāḷe vasati dijagāmepi dasame,",
  "anya-e0602n0:778_0": "Hitopatthenā-yeka adhiki-dha vādehi vadake;",
  "anya-e0602n0:779_0": "Vilomatthehā-neka-sahi ṭhita-māghepi samaye,",
  "anya-e0602n0:780_0": "Viyogatthe-tā-neja-mapi pihavāsehi paname.",
  "anya-e0602n0:781_0": "(Sikharaṇīgāthā)",
  "anya-e0602n0:782_0": "55.",
  "anya-e0602n0:783_0": "Dviadhiki-tare verañjāyaṃ tato dasamaṃ pare,",
  "anya-e0602n0:784_0": "Nivasi nilake khedaṅghātaṃ karo paramaṃ vane;",
  "anya-e0602n0:785_0": "Kilami idha ve vehaṅgānaṃ manoramakaṃ vase,",
  "anya-e0602n0:786_0": "Viraji-sigaṇe medhaṅkāraṃ asokadadaṃ name.",
  "anya-e0602n0:787_0": "(Hiriṇīgāthā)",
  "anya-e0602n0:788_0": "56.",
  "anya-e0602n0:789_0": "Yo sampuṇṇe upari tirase cāliye pabbatepi,",
  "anya-e0602n0:790_0": "Sobhaṃ phulle suvasi itare kāmite appamehi;",
  "anya-e0602n0:791_0": "Sāvatthikkenu-da catudase kārite ālayepi,",
  "anya-e0602n0:792_0": "Kāmo-cchidde tu bhaya muname ñātime dvārakehi.",
  "anya-e0602n0:793_0": "(Mandakkantāgāthā)",
  "anya-e0602n0:794_0": "57.",
  "anya-e0602n0:795_0": "Sakko kappile kariya madake niggaho yoti pañce,",
  "anya-e0602n0:796_0": "Dakkho kappiye vasidha yamake iddhako bhohi aññe;",
  "anya-e0602n0:797_0": "Yakkho dabbike damiya nagare soḷase-topi vaṅke,",
  "anya-e0602n0:798_0": "Aggo-ghattite paciya paname bodhake monipaññe.",
  "anya-e0602n0:799_0": "(Kusumitalatāvellitagāthā)",
  "anya-e0602n0:800_0": "58.",
  "anya-e0602n0:801_0": "Duladdhe pūre yopari ca dasato rājagehaṃ bhajanto,",
  "anya-e0602n0:802_0": "Tu satte kūle kho kari dha yapato vāsamejaṃ jahanto;",
  "anya-e0602n0:803_0": "Dumaṭṭhe pūneso ramita-calato ṭṭhārasetaṃ dadaṃ so,",
  "anya-e0602n0:804_0": "Guṇasse vūpeto namidha karabho kāyakhedaṃ sahanto.",
  "anya-e0602n0:805_0": "(Meghavipphujjitagāthā)",
  "anya-e0602n0:806_0": "59.",
  "anya-e0602n0:807_0": "Cālīye parime tatheva acale-kūnepi vīse lilaṃ,",
  "anya-e0602n0:808_0": "Bhāgī ce sa hite pageva pavase sūrehi nisevitaṃ;",
  "anya-e0602n0:809_0": "Kārite ramike pare ca nagare pūrepi vīse imaṃ,",
  "anya-e0602n0:810_0": "Hārite vasime jahena paname mūlepi khīṇe jitaṃ.",
  "anya-e0602n0:811_0": "(Saddūlavikkīlitagāthā)",
  "anya-e0602n0:812_0": "60.",
  "anya-e0602n0:813_0": "Pañcapañca-mākare tatopi piṇḍakena jetakānane ca,",
  "anya-e0602n0:814_0": "Aññamañña-mādarena yo nisinnakena te ca māpayeva;",
  "anya-e0602n0:815_0": "Pubbapubbaārāme payoji-pāsikāya vāramāvasedha,",
  "anya-e0602n0:816_0": "Suddhasuddha-māmalena poriyātimāya mānasā namesa.",
  "anya-e0602n0:817_0": "(Vuttagāthā)",
  "anya-e0602n0:818_0": "Puññenā’nena saṃsāramupadhi suci sappūrise vo paseve,",
  "anya-e0602n0:819_0": "Tehā dinnaṃ sugāho suciparisaupeto arogo bhaveyyaṃ;",
  "anya-e0602n0:820_0": "Dīghāyūko mahāpañña yasadhanasulābho ca kalyāṇamitto,",
  "anya-e0602n0:821_0": "Lokādibbo ca maggo samamatiparivārova nibbānapatto.",
  "anya-e0602n0:822_0": "(Saddharāgāthā)",
  "anya-e0602n0:823_0": "Ka.",
  "anya-e0602n0:824_0": "Nassati sāsane chanavutādhike ca tivise sate kaliyuge,",
  "anya-e0602n0:825_0": "Dvesatacuddasādhikasahassake sakalaraṭṭhakaṃ khubhi gate;",
  "anya-e0602n0:826_0": "Bhātikayuddhakena nagaraṃ tadā bhavati chārikā yatigaṇo,",
  "anya-e0602n0:827_0": "Dukkhagato mahāpaharaṇehi jivitakhayampi eti piṭake.",
  "anya-e0602n0:828_0": "(Bhaddakagāthā)",
  "anya-e0602n0:829_0": "Kha.",
  "anya-e0602n0:830_0": "Udisaka cetyakepi vikiriya nāsati dha so thiro sagaṇato,",
  "anya-e0602n0:831_0": "Vijahiya purato ttaravaneka kumbhakaragāmakaṃ nivasaye;",
  "anya-e0602n0:832_0": "Satagaṇakehi tattha janakopi “bhota idha vāsa sabbayatinaṃ,",
  "anya-e0602n0:833_0": "Upaṭṭhahamī”ti tamhi katipāhanaṃ vasati kho vimaṃsiya sukhaṃ.",
  "anya-e0602n0:834_0": "(Lalitagāthā)",
  "anya-e0602n0:835_0": "Ga.",
  "anya-e0602n0:836_0": "Tattha araññe ramito sucari saddhamma-timāni suyatīhi tipīko,",
  "anya-e0602n0:837_0": "Dhūrasuyutto parigāhiya sujāto supaṭṭhāti kunadita-muyānaṃ;",
  "anya-e0602n0:838_0": "So satamaccehi kataṃ nagari daṃ tassa ca pācina raha dhikakose,",
  "anya-e0602n0:839_0": "Paccayanāyāsu da chāyabahuko suddhayatipi idha vasanakāle.",
  "anya-e0602n0:840_0": "(Tanugāthā)",
  "anya-e0602n0:841_0": "Gha.",
  "anya-e0602n0:842_0": "Phagguṇamāse chadine raciya niṭṭhaṃva gato paramari iminā-yaṃ,",
  "anya-e0602n0:843_0": "Sijjhatu pemaṃ vata rakkhatu sudevo uda vaḍḍhatu jinavacane taṃ;",
  "anya-e0602n0:844_0": "Vāsamālinī niṭṭhitā."
}