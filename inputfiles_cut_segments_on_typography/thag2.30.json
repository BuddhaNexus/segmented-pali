{
  "thag2.30:0.1_0": "Theragāthā 2.30",
  "thag2.30:0.2_0": "Dukanipāta",
  "thag2.30:0.3_0": "Tatiyavagga",
  "thag2.30:0.4_0": "Kaṇhadinnattheragāthā",
  "thag2.30:1.1_0": "“Upāsitā sappurisā,",
  "thag2.30:1.2_0": "sutā dhammā abhiṇhaso;",
  "thag2.30:1.3_0": "Sutvāna paṭipajjissaṁ,",
  "thag2.30:1.4_0": "añjasaṁ amatogadhaṁ.",
  "thag2.30:2.1_0": "Bhavarāgahatassa me sato,",
  "thag2.30:2.2_0": "Bhavarāgo puna me na vijjati;",
  "thag2.30:2.3_0": "Na cāhu na ca me bhavissati,",
  "thag2.30:2.4_0": "Na ca me etarahi vijjatī”ti.",
  "thag2.30:2.5_0": "… Kaṇhadinno thero …",
  "thag2.30:2.6_0": "vaggo tatiyo.",
  "thag2.30:3.0_0": "Tassuddānaṁ",
  "thag2.30:3.1_0": "Uttaro bhaddajitthero,",
  "thag2.30:3.2_0": "sobhito valliyo isi;",
  "thag2.30:3.3_0": "Vītasoko ca yo thero,",
  "thag2.30:3.4_0": "puṇṇamāso ca nandako;",
  "thag2.30:3.5_0": "Bharato bhāradvājo ca,",
  "thag2.30:3.6_0": "kaṇhadinno mahāmunīti."
}