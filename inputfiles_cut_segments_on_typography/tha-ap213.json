{
  "tha-ap213:0.1_0": "Therāpadāna",
  "tha-ap213:0.2_0": "Hatthivagga",
  "tha-ap213:0.3_0": "1. Hatthidāyakattheraapadāna",
  "tha-ap213:1.1_0": "“Siddhatthassa bhagavato,",
  "tha-ap213:1.2_0": "dvipadindassa tādino;",
  "tha-ap213:1.3_0": "Nāgaseṭṭho mayā dinno,",
  "tha-ap213:1.4_0": "īsādanto urūḷhavā.",
  "tha-ap213:2.1_0": "Uttamatthaṁ anubhomi,",
  "tha-ap213:2.2_0": "santipadamanuttaraṁ;",
  "tha-ap213:2.3_0": "Nāgadānaṁ mayā dinnaṁ,",
  "tha-ap213:2.4_0": "sabbalokahitesino.",
  "tha-ap213:3.1_0": "Catunnavutito kappe,",
  "tha-ap213:3.2_0": "yaṁ nāga madadiṁ tadā;",
  "tha-ap213:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap213:3.4_0": "nāgadānassidaṁ phalaṁ.",
  "tha-ap213:4.1_0": "Aṭṭhasattatikappamhi,",
  "tha-ap213:4.2_0": "soḷasāsiṁsu khattiyā;",
  "tha-ap213:4.3_0": "Samantapāsādikā nāma,",
  "tha-ap213:4.4_0": "cakkavattī mahabbalā.",
  "tha-ap213:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap213:5.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap213:5.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap213:5.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap213:6.1_0": "Itthaṁ sudaṁ āyasmā hatthidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap213:7.1_0": "Hatthidāyakattherassāpadānaṁ paṭhamaṁ."
}