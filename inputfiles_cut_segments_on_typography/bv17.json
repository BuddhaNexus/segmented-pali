{
  "bv17:0.1_0": "Buddhavaṁsa",
  "bv17:0.2_0": "17 Dhammadassībuddhavaṁsa",
  "bv17:1.1_0": "“Tattheva maṇḍakappamhi,",
  "bv17:1.2_0": "dhammadassī mahāyaso;",
  "bv17:1.3_0": "Tamandhakāraṁ vidhamitvā,",
  "bv17:1.4_0": "atirocati sadevake.",
  "bv17:2.1_0": "Tassāpi atulatejassa,",
  "bv17:2.2_0": "dhammacakkappavattane;",
  "bv17:2.3_0": "Koṭisatasahassānaṁ,",
  "bv17:2.4_0": "paṭhamābhisamayo ahu.",
  "bv17:3.1_0": "Yadā buddho dhammadassī,",
  "bv17:3.2_0": "vinesi sañjayaṁ isiṁ;",
  "bv17:3.3_0": "Tadā navutikoṭīnaṁ,",
  "bv17:3.4_0": "dutiyābhisamayo ahu.",
  "bv17:4.1_0": "Yadā sakko upāgañchi,",
  "bv17:4.2_0": "sapariso vināyakaṁ;",
  "bv17:4.3_0": "Tadā asītikoṭīnaṁ,",
  "bv17:4.4_0": "tatiyābhisamayo ahu.",
  "bv17:5.1_0": "Tassāpi devadevassa,",
  "bv17:5.2_0": "sannipātā tayo ahuṁ;",
  "bv17:5.3_0": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv17:5.4_0": "santacittāna tādinaṁ.",
  "bv17:6.1_0": "Yadā buddho dhammadassī,",
  "bv17:6.2_0": "Saraṇe vassaṁ upāgami;",
  "bv17:6.3_0": "Tadā koṭisatasahassānaṁ,",
  "bv17:6.4_0": "Paṭhamo āsi samāgamo.",
  "bv17:7.1_0": "Punāparaṁ yadā buddho,",
  "bv17:7.2_0": "devato eti mānusaṁ;",
  "bv17:7.3_0": "Tadāpi satakoṭīnaṁ,",
  "bv17:7.4_0": "dutiyo āsi samāgamo.",
  "bv17:8.1_0": "Punāparaṁ yadā buddho,",
  "bv17:8.2_0": "pakāsesi dhute guṇe;",
  "bv17:8.3_0": "Tadā asītikoṭīnaṁ,",
  "bv17:8.4_0": "tatiyo āsi samāgamo.",
  "bv17:9.1_0": "Ahaṁ tena samayena,",
  "bv17:9.2_0": "sakko āsiṁ purindado;",
  "bv17:9.3_0": "Dibbena gandhamālena,",
  "bv17:9.4_0": "tūriyenābhipūjayiṁ.",
  "bv17:10.1_0": "Sopi maṁ buddho byākāsi,",
  "bv17:10.2_0": "devamajjhe nisīdiya;",
  "bv17:10.3_0": "‘Aṭṭhārase kappasate,",
  "bv17:10.4_0": "ayaṁ buddho bhavissati.",
  "bv17:11.1_0": "Padhānaṁ padahitvāna,",
  "bv17:11.2_0": "…pe…",
  "bv17:11.3_0": "hessāma sammukhā imaṁ’.",
  "bv17:12.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv17:12.2_0": "bhiyyo cittaṁ pasādayiṁ;",
  "bv17:12.3_0": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv17:12.4_0": "dasapāramipūriyā.",
  "bv17:13.1_0": "Saraṇaṁ nāma nagaraṁ,",
  "bv17:13.2_0": "saraṇo nāma khattiyo;",
  "bv17:13.3_0": "Sunandā nāma janikā,",
  "bv17:13.4_0": "dhammadassissa satthuno.",
  "bv17:14.1_0": "Aṭṭhavassasahassāni,",
  "bv17:14.2_0": "Agāraṁ ajjha so vasi;",
  "bv17:14.3_0": "Arajo virajo sudassano,",
  "bv17:14.4_0": "Tayo pāsādamuttamā.",
  "bv17:15.1_0": "Ticattārīsasahassāni,",
  "bv17:15.2_0": "nāriyo samalaṅkatā;",
  "bv17:15.3_0": "Vicikoḷi nāma nārī,",
  "bv17:15.4_0": "atrajo puññavaḍḍhano.",
  "bv17:16.1_0": "Nimitte caturo disvā,",
  "bv17:16.2_0": "pāsādenābhinikkhami;",
  "bv17:16.3_0": "Sattāhaṁ padhānacāraṁ,",
  "bv17:16.4_0": "acarī purisuttamo.",
  "bv17:17.1_0": "Brahmunā yācito santo,",
  "bv17:17.2_0": "dhammadassī narāsabho;",
  "bv17:17.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv17:17.4_0": "migadāye naruttamo.",
  "bv17:18.1_0": "Padumo phussadevo ca,",
  "bv17:18.2_0": "ahesuṁ aggasāvakā;",
  "bv17:18.3_0": "Sunetto nāmupaṭṭhāko,",
  "bv17:18.4_0": "dhammadassissa satthuno.",
  "bv17:19.1_0": "Khemā ca saccanāmā ca,",
  "bv17:19.2_0": "ahesuṁ aggasāvikā;",
  "bv17:19.3_0": "Bodhi tassa bhagavato,",
  "bv17:19.4_0": "bimbijāloti vuccati.",
  "bv17:20.1_0": "Subhaddo kaṭissaho ceva,",
  "bv17:20.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv17:20.3_0": "Sāḷiyā ca kaḷiyā ca,",
  "bv17:20.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv17:21.1_0": "Sopi buddho asamasamo,",
  "bv17:21.2_0": "asītihatthamuggato;",
  "bv17:21.3_0": "Atirocati tejena,",
  "bv17:21.4_0": "dasasahassimhi dhātuyā.",
  "bv17:22.1_0": "Suphullo sālarājāva,",
  "bv17:22.2_0": "vijjūva gagane yathā;",
  "bv17:22.3_0": "Majjhanhikeva sūriyo,",
  "bv17:22.4_0": "evaṁ so upasobhatha.",
  "bv17:23.1_0": "Tassāpi atulatejassa,",
  "bv17:23.2_0": "samakaṁ āsi jīvitaṁ;",
  "bv17:23.3_0": "Vassasatasahassāni,",
  "bv17:23.4_0": "loke aṭṭhāsi cakkhumā.",
  "bv17:24.1_0": "Obhāsaṁ dassayitvāna,",
  "bv17:24.2_0": "vimalaṁ katvāna sāsanaṁ;",
  "bv17:24.3_0": "Cavi candova gagane,",
  "bv17:24.4_0": "nibbuto so sasāvako.",
  "bv17:25.1_0": "Dhammadassī mahāvīro,",
  "bv17:25.2_0": "Sālārāmamhi nibbuto;",
  "bv17:25.3_0": "Tatthevassa thūpavaro,",
  "bv17:25.4_0": "Tīṇiyojanamuggato”ti.",
  "bv17:26.1_0": "Dhammadassissa bhagavato vaṁso pannarasamo."
}