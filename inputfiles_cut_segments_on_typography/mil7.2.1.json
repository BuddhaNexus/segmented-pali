{
  "mil7.2.1:0.1_0": "Milindapañha",
  "mil7.2.1:0.2_0": "Opammakathāpañha",
  "mil7.2.1:0.3_0": "Gadrabhavagga",
  "mil7.2.1:0.4_0": "1. Gadrabhaṅgapañha",
  "mil7.2.1:1.1_0": "“Bhante nāgasena,",
  "mil7.2.1:1.1_1": "‘gadrabhassa ekaṁ aṅgaṁ gahetabban’ti yaṁ vadesi,",
  "mil7.2.1:1.1_2": "katamaṁ taṁ ekaṁ aṅgaṁ gahetabban”ti?",
  "mil7.2.1:1.2_0": "“Yathā, mahārāja,",
  "mil7.2.1:1.2_1": "gadrabho nāma saṅkārakūṭepi catukkepi siṅghāṭakepi gāmadvārepi thusarāsimhipi yattha katthaci sayati,",
  "mil7.2.1:1.2_2": "na sayanabahulo hoti;",
  "mil7.2.1:1.3_0": "evameva kho, mahārāja,",
  "mil7.2.1:1.3_1": "yoginā yogāvacarena tiṇasanthārepi paṇṇasanthārepi kaṭṭhamañcakepi chamāyapi yattha katthaci cammakhaṇḍaṁ pattharitvā yattha katthaci sayitabbaṁ,",
  "mil7.2.1:1.3_2": "na sayanabahulena bhavitabbaṁ.",
  "mil7.2.1:1.4_0": "Idaṁ, mahārāja, gadrabhassa ekaṁ aṅgaṁ gahetabbaṁ.",
  "mil7.2.1:1.5_0": "Bhāsitampetaṁ, mahārāja,",
  "mil7.2.1:1.5_1": "bhagavatā devātidevena ‘kaliṅgarūpadhānā,",
  "mil7.2.1:1.5_2": "bhikkhave,",
  "mil7.2.1:1.5_3": "etarahi mama sāvakā viharanti appamattā ātāpino padhānasmin’ti.",
  "mil7.2.1:1.6_0": "Bhāsitampetaṁ, mahārāja, therena sāriputtena dhammasenāpatināpi—",
  "mil7.2.1:2.1_0": "‘Pallaṅkena nisinnassa,",
  "mil7.2.1:2.2_0": "jaṇṇuke nābhivassati;",
  "mil7.2.1:2.3_0": "Alaṁ phāsuvihārāya,",
  "mil7.2.1:2.4_0": "pahitattassa bhikkhuno’”ti.",
  "mil7.2.1:3.1_0": "Gadrabhaṅgapañho paṭhamo."
}