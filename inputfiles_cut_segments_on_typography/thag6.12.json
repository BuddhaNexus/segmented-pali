{
  "thag6.12:0.1_0": "Theragāthā 6.12",
  "thag6.12:0.2_0": "Chakkanipāta",
  "thag6.12:0.3_0": "Paṭhamavagga",
  "thag6.12:0.4_0": "Brahmadattattheragāthā",
  "thag6.12:1.1_0": "“Akkodhassa kuto kodho,",
  "thag6.12:1.2_0": "dantassa samajīvino;",
  "thag6.12:1.3_0": "Sammadaññāvimuttassa,",
  "thag6.12:1.4_0": "upasantassa tādino.",
  "thag6.12:2.1_0": "Tasseva tena pāpiyo,",
  "thag6.12:2.2_0": "yo kuddhaṁ paṭikujjhati;",
  "thag6.12:2.3_0": "Kuddhaṁ appaṭikujjhanto,",
  "thag6.12:2.4_0": "saṅgāmaṁ jeti dujjayaṁ.",
  "thag6.12:3.1_0": "Ubhinnamatthaṁ carati,",
  "thag6.12:3.2_0": "attano ca parassa ca;",
  "thag6.12:3.3_0": "Paraṁ saṅkupitaṁ ñatvā,",
  "thag6.12:3.4_0": "yo sato upasammati.",
  "thag6.12:4.1_0": "Ubhinnaṁ tikicchantaṁ taṁ,",
  "thag6.12:4.2_0": "attano ca parassa ca;",
  "thag6.12:4.3_0": "Janā maññanti bāloti,",
  "thag6.12:4.4_0": "ye dhammassa akovidā.",
  "thag6.12:5.1_0": "Uppajje te sace kodho,",
  "thag6.12:5.2_0": "āvajja kakacūpamaṁ;",
  "thag6.12:5.3_0": "Uppajje ce rase taṇhā,",
  "thag6.12:5.4_0": "puttamaṁsūpamaṁ sara.",
  "thag6.12:6.1_0": "Sace dhāvati cittaṁ te,",
  "thag6.12:6.2_0": "kāmesu ca bhavesu ca;",
  "thag6.12:6.3_0": "Khippaṁ niggaṇha satiyā,",
  "thag6.12:6.4_0": "kiṭṭhādaṁ viya duppasun”ti.",
  "thag6.12:6.5_0": "… Brahmadatto thero …."
}