{
  "tha-ap22:0.1_0": "Therāpadāna",
  "tha-ap22:0.2_0": "Sīhāsaniyavagga",
  "tha-ap22:0.3_0": "10. Sumaṅgalattheraapadāna",
  "tha-ap22:1.1_0": "“Āhutiṁ yiṭṭhukāmohaṁ,",
  "tha-ap22:1.2_0": "paṭiyādetvāna bhojanaṁ;",
  "tha-ap22:1.3_0": "Brāhmaṇe paṭimānento,",
  "tha-ap22:1.4_0": "visāle māḷake ṭhito.",
  "tha-ap22:2.1_0": "Athaddasāsiṁ sambuddhaṁ,",
  "tha-ap22:2.2_0": "piyadassiṁ mahāyasaṁ;",
  "tha-ap22:2.3_0": "Sabbalokavinetāraṁ,",
  "tha-ap22:2.4_0": "sayambhuṁ aggapuggalaṁ.",
  "tha-ap22:3.1_0": "Bhagavantaṁ jutimantaṁ,",
  "tha-ap22:3.2_0": "sāvakehi purakkhataṁ;",
  "tha-ap22:3.3_0": "Ādiccamiva rocantaṁ,",
  "tha-ap22:3.4_0": "rathiyaṁ paṭipannakaṁ.",
  "tha-ap22:4.1_0": "Añjaliṁ paggahetvāna,",
  "tha-ap22:4.2_0": "sakaṁ cittaṁ pasādayiṁ;",
  "tha-ap22:4.3_0": "Manasāva nimantesiṁ,",
  "tha-ap22:4.4_0": "‘āgacchatu mahāmuni’.",
  "tha-ap22:5.1_0": "Mama saṅkappamaññāya,",
  "tha-ap22:5.2_0": "satthā loke anuttaro;",
  "tha-ap22:5.3_0": "Khīṇāsavasahassehi,",
  "tha-ap22:5.4_0": "mama dvāraṁ upāgami.",
  "tha-ap22:6.1_0": "Namo te purisājañña,",
  "tha-ap22:6.2_0": "namo te purisuttama;",
  "tha-ap22:6.3_0": "Pāsādaṁ abhirūhitvā,",
  "tha-ap22:6.4_0": "sīhāsane nisīdataṁ.",
  "tha-ap22:7.1_0": "Danto dantaparivāro,",
  "tha-ap22:7.2_0": "tiṇṇo tārayataṁ varo;",
  "tha-ap22:7.3_0": "Pāsādaṁ abhirūhitvā,",
  "tha-ap22:7.4_0": "nisīdi pavarāsane.",
  "tha-ap22:8.1_0": "Yaṁ me atthi sake gehe,",
  "tha-ap22:8.2_0": "āmisaṁ paccupaṭṭhitaṁ;",
  "tha-ap22:8.3_0": "Tāhaṁ buddhassa pādāsiṁ,",
  "tha-ap22:8.4_0": "pasanno sehi pāṇibhi.",
  "tha-ap22:9.1_0": "Pasannacitto sumano,",
  "tha-ap22:9.2_0": "vedajāto katañjalī;",
  "tha-ap22:9.3_0": "Buddhaseṭṭhaṁ namassāmi,",
  "tha-ap22:9.4_0": "aho buddhassuḷāratā.",
  "tha-ap22:10.1_0": "Aṭṭhannaṁ payirūpāsataṁ,",
  "tha-ap22:10.2_0": "bhuñjaṁ khīṇāsavā bahū;",
  "tha-ap22:10.3_0": "Tuyheveso ānubhāvo,",
  "tha-ap22:10.4_0": "saraṇaṁ taṁ upemahaṁ.",
  "tha-ap22:11.1_0": "Piyadassī ca bhagavā,",
  "tha-ap22:11.2_0": "lokajeṭṭho narāsabho;",
  "tha-ap22:11.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap22:11.4_0": "imā gāthā abhāsatha.",
  "tha-ap22:12.1_0": "‘Yo so saṅghaṁ abhojesi,",
  "tha-ap22:12.2_0": "ujubhūtaṁ samāhitaṁ;",
  "tha-ap22:12.3_0": "Tathāgatañca sambuddhaṁ,",
  "tha-ap22:12.4_0": "suṇātha mama bhāsato.",
  "tha-ap22:13.1_0": "Sattavīsatikkhattuṁ so,",
  "tha-ap22:13.2_0": "devarajjaṁ karissati;",
  "tha-ap22:13.3_0": "Sakakammābhiraddho so,",
  "tha-ap22:13.4_0": "devaloke ramissati.",
  "tha-ap22:14.1_0": "Dasa aṭṭha cakkhattuṁ so,",
  "tha-ap22:14.2_0": "cakkavattī bhavissati;",
  "tha-ap22:14.3_0": "Pathabyā rajjaṁ pañcasataṁ,",
  "tha-ap22:14.4_0": "vasudhaṁ āvasissati’.",
  "tha-ap22:15.1_0": "Araññavanamoggayha,",
  "tha-ap22:15.2_0": "kānanaṁ byagghasevitaṁ;",
  "tha-ap22:15.3_0": "Padhānaṁ padahitvāna,",
  "tha-ap22:15.4_0": "kilesā jhāpitā mayā.",
  "tha-ap22:16.1_0": "Aṭṭhārase kappasate,",
  "tha-ap22:16.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap22:16.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap22:16.4_0": "bhattadānassidaṁ phalaṁ.",
  "tha-ap22:17.1_0": "Paṭisambhidā catasso,",
  "tha-ap22:17.2_0": "Vimokkhāpi ca aṭṭhime;",
  "tha-ap22:17.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap22:17.4_0": "Kataṁ buddhassa sāsanaṁ”.",
  "tha-ap22:18.1_0": "Itthaṁ sudaṁ āyasmā sumaṅgalo thero imā gāthāyo abhāsitthāti.",
  "tha-ap22:19.1_0": "Sumaṅgalattherassāpadānaṁ dasamaṁ.",
  "tha-ap22:20.1_0": "Tassuddānaṁ",
  "tha-ap22:21.1_0": "Sīhāsanī ekathambhī,",
  "tha-ap22:21.2_0": "nando ca cūḷapanthako;",
  "tha-ap22:21.3_0": "Pilindarāhulo ceva,",
  "tha-ap22:21.4_0": "vaṅganto raṭṭhapālako.",
  "tha-ap22:22.1_0": "Sopāko maṅgalo ceva,",
  "tha-ap22:22.2_0": "daseva dutiye vagge;",
  "tha-ap22:22.3_0": "Satañca aṭṭhatiṁsa ca,",
  "tha-ap22:22.4_0": "gāthā cettha pakāsitā.",
  "tha-ap22:23.1_0": "Sīhāsaniyavaggo dutiyo."
}