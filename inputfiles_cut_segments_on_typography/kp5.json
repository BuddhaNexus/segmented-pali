{
  "kp5:0.1_0": "Khuddakapāṭha 5",
  "kp5:0.2_0": "Maṅgalasutta",
  "kp5:1.1_0": "Evaṁ me sutaṁ—",
  "kp5:1.2_0": "ekaṁ samayaṁ bhagavā sāvatthiyaṁ viharati jetavane anāthapiṇḍikassa ārāme.",
  "kp5:1.3_0": "Atha kho aññatarā devatā abhikkantāya rattiyā abhikkantavaṇṇā kevalakappaṁ jetavanaṁ obhāsetvā yena bhagavā tenupasaṅkami;",
  "kp5:1.3_1": "upasaṅkamitvā bhagavantaṁ abhivādetvā ekamantaṁ aṭṭhāsi.",
  "kp5:1.4_0": "Ekamantaṁ ṭhitā kho sā devatā bhagavantaṁ gāthāya ajjhabhāsi—",
  "kp5:2.1_0": "“Bahū devā manussā ca,",
  "kp5:2.2_0": "maṅgalāni acintayuṁ;",
  "kp5:2.3_0": "Ākaṅkhamānā sotthānaṁ,",
  "kp5:2.4_0": "brūhi maṅgalamuttamaṁ”.",
  "kp5:3.1_0": "“Asevanā ca bālānaṁ,",
  "kp5:3.2_0": "paṇḍitānañca sevanā;",
  "kp5:3.3_0": "Pūjā ca pūjaneyyānaṁ,",
  "kp5:3.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:4.1_0": "Patirūpadesavāso ca,",
  "kp5:4.2_0": "pubbe ca katapuññatā;",
  "kp5:4.3_0": "Attasammāpaṇidhi ca,",
  "kp5:4.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:5.1_0": "Bāhusaccañca sippañca,",
  "kp5:5.2_0": "vinayo ca susikkhito;",
  "kp5:5.3_0": "Subhāsitā ca yā vācā,",
  "kp5:5.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:6.1_0": "Mātāpituupaṭṭhānaṁ,",
  "kp5:6.2_0": "puttadārassa saṅgaho;",
  "kp5:6.3_0": "Anākulā ca kammantā,",
  "kp5:6.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:7.1_0": "Dānañca dhammacariyā ca,",
  "kp5:7.2_0": "ñātakānañca saṅgaho;",
  "kp5:7.3_0": "Anavajjāni kammāni,",
  "kp5:7.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:8.1_0": "Āratī viratī pāpā,",
  "kp5:8.2_0": "majjapānā ca saṁyamo;",
  "kp5:8.3_0": "Appamādo ca dhammesu,",
  "kp5:8.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:9.1_0": "Gāravo ca nivāto ca,",
  "kp5:9.2_0": "santuṭṭhi ca kataññutā;",
  "kp5:9.3_0": "Kālena dhammassavanaṁ,",
  "kp5:9.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:10.1_0": "Khantī ca sovacassatā,",
  "kp5:10.2_0": "samaṇānañca dassanaṁ;",
  "kp5:10.3_0": "Kālena dhammasākacchā,",
  "kp5:10.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:11.1_0": "Tapo ca brahmacariyañca,",
  "kp5:11.2_0": "ariyasaccāna dassanaṁ;",
  "kp5:11.3_0": "Nibbānasacchikiriyā ca,",
  "kp5:11.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:12.1_0": "Phuṭṭhassa lokadhammehi,",
  "kp5:12.2_0": "cittaṁ yassa na kampati;",
  "kp5:12.3_0": "Asokaṁ virajaṁ khemaṁ,",
  "kp5:12.4_0": "etaṁ maṅgalamuttamaṁ.",
  "kp5:13.1_0": "Etādisāni katvāna,",
  "kp5:13.2_0": "Sabbattha maparājitā;",
  "kp5:13.3_0": "Sabbattha sotthiṁ gacchanti,",
  "kp5:13.4_0": "Taṁ tesaṁ maṅgalamuttaman”ti.",
  "kp5:14.1_0": "Maṅgalasuttaṁ."
}