{
  "thig3.8:0.1_0": "Therīgāthā 3.8",
  "thig3.8:0.2_0": "Tikanipāta",
  "thig3.8:0.3_0": "Somātherīgāthā",
  "thig3.8:1.1_0": "“Yaṁ taṁ isīhi pattabbaṁ,",
  "thig3.8:1.2_0": "ṭhānaṁ durabhisambhavaṁ;",
  "thig3.8:1.3_0": "Na taṁ dvaṅgulapaññāya,",
  "thig3.8:1.4_0": "sakkā pappotumitthiyā”.",
  "thig3.8:2.1_0": "“Itthibhāvo no kiṁ kayirā,",
  "thig3.8:2.2_0": "cittamhi susamāhite;",
  "thig3.8:2.3_0": "Ñāṇamhi vattamānamhi,",
  "thig3.8:2.4_0": "sammā dhammaṁ vipassato.",
  "thig3.8:3.1_0": "Sabbattha vihatā nandī,",
  "thig3.8:3.2_0": "Tamokhandho padālito;",
  "thig3.8:3.3_0": "Evaṁ jānāhi pāpima,",
  "thig3.8:3.4_0": "Nihato tvamasi antakā”ti.",
  "thig3.8:4.1_0": "… Somā therī ….",
  "thig3.8:5.1_0": "Tikanipāto niṭṭhito."
}