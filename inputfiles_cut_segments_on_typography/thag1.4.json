{
  "thag1.4:0.1_0": "Theragāthā 1.4",
  "thag1.4:0.2_0": "Ekakanipāta",
  "thag1.4:0.3_0": "Paṭhamavagga",
  "thag1.4:0.4_0": "Puṇṇattheragāthā",
  "thag1.4:1.1_0": "“Sabbhireva samāsetha,",
  "thag1.4:1.2_0": "paṇḍitehatthadassibhi;",
  "thag1.4:1.3_0": "Atthaṁ mahantaṁ gambhīraṁ,",
  "thag1.4:1.4_0": "duddasaṁ nipuṇaṁ aṇuṁ;",
  "thag1.4:1.5_0": "Dhīrā samadhigacchanti,",
  "thag1.4:1.6_0": "appamattā vicakkhaṇā”ti.",
  "thag1.4:1.7_0": "Itthaṁ sudaṁ āyasmā puṇṇo mantāṇiputto thero gāthaṁ abhāsitthāti."
}