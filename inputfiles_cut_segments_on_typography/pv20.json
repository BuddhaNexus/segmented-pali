{
  "pv20:0.1_0": "Petavatthu",
  "pv20:0.2_0": "Ubbarivagga",
  "pv20:0.3_0": "8. Cūḷaseṭṭhipetavatthu",
  "pv20:1.1_0": "“Naggo kiso pabbajitosi bhante,",
  "pv20:1.2_0": "Rattiṁ kuhiṁ gacchasi kissa hetu;",
  "pv20:1.3_0": "Ācikkha me taṁ api sakkuṇemu,",
  "pv20:1.4_0": "Sabbena vittaṁ paṭipādaye tuvan”ti.",
  "pv20:2.1_0": "“Bārāṇasī nagaraṁ dūraghuṭṭhaṁ,",
  "pv20:2.2_0": "Tatthāhaṁ gahapati aḍḍhako ahu dīno;",
  "pv20:2.3_0": "Adātā gedhitamano āmisasmiṁ,",
  "pv20:2.4_0": "Dussīlyena yamavisayamhi patto.",
  "pv20:3.1_0": "So sūcikāya kilamito tehi,",
  "pv20:3.2_0": "Teneva ñātīsu yāmi āmisakiñcikkhahetu;",
  "pv20:3.3_0": "Adānasīlā na ca saddahanti,",
  "pv20:3.4_0": "Dānaphalaṁ hoti paramhi loke.",
  "pv20:4.1_0": "Dhītā ca mayhaṁ lapate abhikkhaṇaṁ,",
  "pv20:4.2_0": "‘Dassāmi dānaṁ pitūnaṁ pitāmahānaṁ’;",
  "pv20:4.3_0": "Tamupakkhaṭaṁ parivisayanti brāhmaṇā,",
  "pv20:4.4_0": "‘Yāmi ahaṁ andhakavindaṁ bhottun’”ti.",
  "pv20:5.1_0": "Tamavoca rājā “anubhaviyāna tampi,",
  "pv20:5.2_0": "Eyyāsi khippaṁ ahamapi kassaṁ pūjaṁ;",
  "pv20:5.3_0": "Ācikkha me taṁ yadi atthi hetu,",
  "pv20:5.4_0": "Saddhāyitaṁ hetuvaco suṇomā”ti.",
  "pv20:6.1_0": "“Tathā”ti vatvā agamāsi tattha,",
  "pv20:6.2_0": "Bhuñjiṁsu bhattaṁ na ca dakkhiṇārahā;",
  "pv20:6.3_0": "Paccāgami rājagahaṁ punāparaṁ,",
  "pv20:6.4_0": "Pāturahosi purato janādhipassa.",
  "pv20:7.1_0": "Disvāna petaṁ punadeva āgataṁ,",
  "pv20:7.2_0": "Rājā avoca “ahamapi kiṁ dadāmi;",
  "pv20:7.3_0": "Ācikkha me taṁ yadi atthi hetu,",
  "pv20:7.4_0": "Yena tuvaṁ cirataraṁ pīṇito siyā”ti.",
  "pv20:8.1_0": "“Buddhañca saṅghaṁ parivisiyāna rāja,",
  "pv20:8.2_0": "Annena pānena ca cīvarena;",
  "pv20:8.3_0": "Taṁ dakkhiṇaṁ ādisa me hitāya,",
  "pv20:8.4_0": "Evaṁ ahaṁ cirataraṁ pīṇito siyā”ti.",
  "pv20:9.1_0": "Tato ca rājā nipatitvā tāvade,",
  "pv20:9.2_0": "Dānaṁ sahatthā atulaṁ daditvā saṅghe;",
  "pv20:9.3_0": "Ārocesi pakataṁ tathāgatassa,",
  "pv20:9.4_0": "Tassa ca petassa dakkhiṇaṁ ādisittha.",
  "pv20:10.1_0": "So pūjito ativiya sobhamāno,",
  "pv20:10.2_0": "Pāturahosi purato janādhipassa;",
  "pv20:10.3_0": "“Yakkhohamasmi paramiddhipatto,",
  "pv20:10.4_0": "Na mayhamatthi samā sadisā mānusā.",
  "pv20:11.1_0": "Passānubhāvaṁ aparimitaṁ mamayidaṁ,",
  "pv20:11.2_0": "Tayānudiṭṭhaṁ atulaṁ datvā saṅghe;",
  "pv20:11.3_0": "Santappito satataṁ sadā bahūhi,",
  "pv20:11.4_0": "Yāmi ahaṁ sukhito manussadevā”ti.",
  "pv20:12.1_0": "Cūḷaseṭṭhipetavatthu aṭṭhamaṁ.",
  "pv20:12.2_0": "Bhāṇavāraṁ paṭhamaṁ."
}