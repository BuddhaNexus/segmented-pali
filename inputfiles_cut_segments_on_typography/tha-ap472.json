{
  "tha-ap472:0.1_0": "Therāpadāna",
  "tha-ap472:0.2_0": "Sālakusumiyavagga",
  "tha-ap472:0.3_0": "10. Nimittabyākaraṇiyattheraapadāna",
  "tha-ap472:1.1_0": "“Ajjhogāhetvā himavaṁ,",
  "tha-ap472:1.2_0": "mante vāce mahaṁ tadā;",
  "tha-ap472:1.3_0": "Catupaññāsasahassāni,",
  "tha-ap472:1.4_0": "sissā mayhaṁ upaṭṭhahuṁ.",
  "tha-ap472:2.1_0": "Adhitā vedagū sabbe,",
  "tha-ap472:2.2_0": "chaḷaṅge pāramiṁ gatā;",
  "tha-ap472:2.3_0": "Sakavijjāhupatthaddhā,",
  "tha-ap472:2.4_0": "himavante vasanti te.",
  "tha-ap472:3.1_0": "Cavitvā tusitā kāyā,",
  "tha-ap472:3.2_0": "devaputto mahāyaso;",
  "tha-ap472:3.3_0": "Uppajji mātukucchismiṁ,",
  "tha-ap472:3.4_0": "sampajāno patissato.",
  "tha-ap472:4.1_0": "Sambuddhe upapajjante,",
  "tha-ap472:4.2_0": "dasasahassi kampatha;",
  "tha-ap472:4.3_0": "Andhā cakkhuṁ alabhiṁsu,",
  "tha-ap472:4.4_0": "uppajjantamhi nāyake.",
  "tha-ap472:5.1_0": "Sabbākāraṁ pakampittha,",
  "tha-ap472:5.2_0": "kevalā vasudhā ayaṁ;",
  "tha-ap472:5.3_0": "Nigghosasaddaṁ sutvāna,",
  "tha-ap472:5.4_0": "ubbijjiṁsu mahājanā.",
  "tha-ap472:6.1_0": "Sabbe janā samāgamma,",
  "tha-ap472:6.2_0": "āgacchuṁ mama santikaṁ;",
  "tha-ap472:6.3_0": "‘Vasudhāyaṁ pakampittha,",
  "tha-ap472:6.4_0": "kiṁ vipāko bhavissati’.",
  "tha-ap472:7.1_0": "Avacāsiṁ tadā tesaṁ,",
  "tha-ap472:7.2_0": "‘mā bhetha natthi vo bhayaṁ;",
  "tha-ap472:7.3_0": "Vissatthā hotha sabbepi,",
  "tha-ap472:7.4_0": "uppādoyaṁ suvatthiko.",
  "tha-ap472:8.1_0": "Aṭṭhahetūhi samphussa,",
  "tha-ap472:8.2_0": "vasudhāyaṁ pakampati;",
  "tha-ap472:8.3_0": "Tathā nimittā dissanti,",
  "tha-ap472:8.4_0": "obhāso vipulo mahā.",
  "tha-ap472:9.1_0": "Asaṁsayaṁ buddhaseṭṭho,",
  "tha-ap472:9.2_0": "uppajjissati cakkhumā’;",
  "tha-ap472:9.3_0": "Saññāpetvāna janataṁ,",
  "tha-ap472:9.4_0": "pañca sīle kathesahaṁ.",
  "tha-ap472:10.1_0": "Sutvāna pañca sīlāni,",
  "tha-ap472:10.2_0": "buddhuppādañca dullabhaṁ;",
  "tha-ap472:10.3_0": "Ubbegajātā sumanā,",
  "tha-ap472:10.4_0": "tuṭṭhahaṭṭhā ahaṁsu te.",
  "tha-ap472:11.1_0": "Dvenavute ito kappe,",
  "tha-ap472:11.2_0": "yaṁ nimittaṁ viyākariṁ;",
  "tha-ap472:11.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap472:11.4_0": "byākaraṇassidaṁ phalaṁ.",
  "tha-ap472:12.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap472:12.2_0": "…pe…",
  "tha-ap472:12.3_0": "viharāmi anāsavo.",
  "tha-ap472:13.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap472:13.2_0": "…pe…",
  "tha-ap472:13.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap472:14.1_0": "Paṭisambhidā catasso,",
  "tha-ap472:14.2_0": "…pe…",
  "tha-ap472:14.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap472:15.1_0": "Itthaṁ sudaṁ āyasmā nimittabyākaraṇiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap472:16.1_0": "Nimittabyākaraṇiyattherassāpadānaṁ dasamaṁ.",
  "tha-ap472:17.1_0": "Sālakusumiyavaggo sattacattālīsamo.",
  "tha-ap472:18.1_0": "Tassuddānaṁ",
  "tha-ap472:19.1_0": "Sālakusumiyo thero,",
  "tha-ap472:19.2_0": "pūjā nibbāpakopi ca;",
  "tha-ap472:19.3_0": "Setudo tālavaṇṭī ca,",
  "tha-ap472:19.4_0": "avaṭalabujappado.",
  "tha-ap472:20.1_0": "Pilakkhapaṭibhānī ca,",
  "tha-ap472:20.2_0": "veyyākaraṇiyo dijo;",
  "tha-ap472:20.3_0": "Dvesattati ca gāthāyo,",
  "tha-ap472:20.4_0": "gaṇitāyo vibhāvibhi."
}