{
  "pv41:0.1_0": "Petavatthu",
  "pv41:0.2_0": "Mahāvagga",
  "pv41:0.3_0": "6. Kumārapetavatthu",
  "pv41:1.1_0": "“Sāvatthi nāma nagaraṁ,",
  "pv41:1.2_0": "himavantassa passato;",
  "pv41:1.3_0": "Tattha āsuṁ dve kumārā,",
  "pv41:1.4_0": "rājaputtāti me sutaṁ.",
  "pv41:2.1_0": "Sammattā rajanīyesu,",
  "pv41:2.2_0": "kāmassādābhinandino;",
  "pv41:2.3_0": "Paccuppannasukhe giddhā,",
  "pv41:2.4_0": "na te passiṁsunāgataṁ.",
  "pv41:3.1_0": "Te cutā ca manussattā,",
  "pv41:3.2_0": "paralokaṁ ito gatā;",
  "pv41:3.3_0": "Tedha ghosentyadissantā,",
  "pv41:3.4_0": "pubbe dukkaṭamattano.",
  "pv41:4.1_0": "Bahūsu vata santesu,",
  "pv41:4.2_0": "deyyadhamme upaṭṭhite;",
  "pv41:4.3_0": "Nāsakkhimhā ca attānaṁ,",
  "pv41:4.4_0": "parittaṁ kātuṁ sukhāvahaṁ.",
  "pv41:5.1_0": "Kiṁ tato pāpakaṁ assa,",
  "pv41:5.2_0": "yaṁ no rājakulā cutā;",
  "pv41:5.3_0": "Upapannā pettivisayaṁ,",
  "pv41:5.4_0": "khuppipāsasamappitā.",
  "pv41:6.1_0": "Sāmino idha hutvāna,",
  "pv41:6.2_0": "honti asāmino tahiṁ;",
  "pv41:6.3_0": "Bhamanti khuppipāsāya,",
  "pv41:6.4_0": "manussā unnatonatā.",
  "pv41:7.1_0": "Etamādīnavaṁ ñatvā,",
  "pv41:7.2_0": "issaramadasambhavaṁ;",
  "pv41:7.3_0": "Pahāya issaramadaṁ,",
  "pv41:7.4_0": "bhave saggagato naro;",
  "pv41:7.5_0": "Kāyassa bhedā sappañño,",
  "pv41:7.6_0": "saggaṁ so upapajjatī”ti.",
  "pv41:8.1_0": "Kumārapetavatthu chaṭṭhaṁ."
}