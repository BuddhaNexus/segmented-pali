{
  "thag16.7:0.1_0": "Theragāthā 16.7",
  "thag16.7:0.2_0": "Vīsatinipāta",
  "thag16.7:0.3_0": "Paṭhamavagga",
  "thag16.7:0.4_0": "Kāḷigodhāputtabhaddiyattheragāthā",
  "thag16.7:1.1_0": "“Yātaṁ me hatthigīvāya,",
  "thag16.7:1.2_0": "sukhumā vatthā padhāritā;",
  "thag16.7:1.3_0": "Sālīnaṁ odano bhutto,",
  "thag16.7:1.4_0": "sucimaṁsūpasecano.",
  "thag16.7:2.1_0": "Sojja bhaddo sātatiko,",
  "thag16.7:2.2_0": "uñchāpattāgate rato;",
  "thag16.7:2.3_0": "Jhāyati anupādāno,",
  "thag16.7:2.4_0": "putto godhāya bhaddiyo.",
  "thag16.7:3.1_0": "Paṁsukūlī sātatiko,",
  "thag16.7:3.2_0": "uñchāpattāgate rato;",
  "thag16.7:3.3_0": "Jhāyati anupādāno,",
  "thag16.7:3.4_0": "putto godhāya bhaddiyo.",
  "thag16.7:4.1_0": "Piṇḍapātī sātatiko,",
  "thag16.7:4.3_0": "pe …",
  "thag16.7:5.1_0": "Tecīvarī sātatiko,",
  "thag16.7:5.3_0": "pe …",
  "thag16.7:6.1_0": "Sapadānacārī sātatiko,",
  "thag16.7:6.3_0": "pe …",
  "thag16.7:7.1_0": "Ekāsanī sātatiko,",
  "thag16.7:7.3_0": "pe …",
  "thag16.7:8.1_0": "Pattapiṇḍī sātatiko,",
  "thag16.7:8.3_0": "pe …",
  "thag16.7:9.1_0": "Khalupacchābhattī sātatiko,",
  "thag16.7:9.3_0": "pe …",
  "thag16.7:10.1_0": "Āraññiko sātatiko,",
  "thag16.7:10.3_0": "pe …",
  "thag16.7:11.1_0": "Rukkhamūliko sātatiko,",
  "thag16.7:11.3_0": "pe …",
  "thag16.7:12.1_0": "Abbhokāsī sātatiko,",
  "thag16.7:12.3_0": "pe …",
  "thag16.7:13.1_0": "Sosāniko sātatiko,",
  "thag16.7:13.3_0": "pe …",
  "thag16.7:14.1_0": "Yathāsanthatiko sātatiko,",
  "thag16.7:14.3_0": "pe …",
  "thag16.7:15.1_0": "Nesajjiko sātatiko,",
  "thag16.7:15.3_0": "pe …",
  "thag16.7:16.1_0": "Appiccho sātatiko,",
  "thag16.7:16.3_0": "pe …",
  "thag16.7:17.1_0": "Santuṭṭho sātatiko,",
  "thag16.7:17.3_0": "pe …",
  "thag16.7:18.1_0": "Pavivitto sātatiko,",
  "thag16.7:18.3_0": "pe …",
  "thag16.7:19.1_0": "Asaṁsaṭṭho sātatiko,",
  "thag16.7:19.3_0": "pe …",
  "thag16.7:20.1_0": "Āraddhavīriyo sātatiko,",
  "thag16.7:20.3_0": "pe …",
  "thag16.7:21.1_0": "Hitvā satapalaṁ kaṁsaṁ,",
  "thag16.7:21.2_0": "sovaṇṇaṁ satarājikaṁ;",
  "thag16.7:21.3_0": "Aggahiṁ mattikāpattaṁ,",
  "thag16.7:21.4_0": "idaṁ dutiyābhisecanaṁ.",
  "thag16.7:22.1_0": "Ucce maṇḍalipākāre,",
  "thag16.7:22.2_0": "daḷhamaṭṭālakoṭṭhake;",
  "thag16.7:22.3_0": "Rakkhito khaggahatthehi,",
  "thag16.7:22.4_0": "uttasaṁ vihariṁ pure.",
  "thag16.7:23.1_0": "Sojja bhaddo anutrāsī,",
  "thag16.7:23.2_0": "pahīnabhayabheravo;",
  "thag16.7:23.3_0": "Jhāyati vanamoggayha,",
  "thag16.7:23.4_0": "putto godhāya bhaddiyo.",
  "thag16.7:24.1_0": "Sīlakkhandhe patiṭṭhāya,",
  "thag16.7:24.2_0": "satiṁ paññañca bhāvayaṁ;",
  "thag16.7:24.3_0": "Pāpuṇiṁ anupubbena,",
  "thag16.7:24.4_0": "sabbasaṁyojanakkhayan”ti.",
  "thag16.7:24.5_0": "… Bhaddiyo kāḷigodhāya putto thero …."
}