{
  "mil5.3.11:0.1_0": "Milindapañha",
  "mil5.3.11:0.2_0": "Meṇḍakapañha",
  "mil5.3.11:0.3_0": "Paṇāmitavagga",
  "mil5.3.11:0.4_0": "11. Ahiṁsāniggahapañha",
  "mil5.3.11:1.1_0": "“Bhante nāgasena, bhāsitampetaṁ bhagavatā—",
  "mil5.3.11:1.2_0": "‘ahiṁsāya cara loke, piyo hohisi maṁmivā’ti.",
  "mil5.3.11:1.3_0": "Puna ca bhaṇitaṁ—",
  "mil5.3.11:1.4_0": "‘niggaṇhe niggahārahaṁ, paggaṇhe paggahārahan’ti.",
  "mil5.3.11:1.5_0": "Niggaho nāma,",
  "mil5.3.11:1.5_1": "bhante nāgasena,",
  "mil5.3.11:1.5_2": "hatthacchedo pādacchedo vadho bandhanaṁ kāraṇā māraṇaṁ santativikopanaṁ,",
  "mil5.3.11:1.5_3": "na etaṁ vacanaṁ bhagavato yuttaṁ,",
  "mil5.3.11:1.5_4": "na ca bhagavā arahati etaṁ vacanaṁ vattuṁ.",
  "mil5.3.11:1.6_0": "Yadi, bhante nāgasena, bhagavatā bhaṇitaṁ—",
  "mil5.3.11:1.7_0": "‘ahiṁsāya cara loke,",
  "mil5.3.11:1.7_1": "piyo hohisi maṁmivā’ti,",
  "mil5.3.11:1.7_2": "tena hi ‘niggaṇhe niggahārahaṁ,",
  "mil5.3.11:1.7_3": "paggaṇhe paggahārahan’ti yaṁ vacanaṁ,",
  "mil5.3.11:1.7_4": "taṁ micchā.",
  "mil5.3.11:1.8_0": "Yadi tathāgatena bhaṇitaṁ—",
  "mil5.3.11:1.9_0": "‘niggaṇhe niggahārahaṁ,",
  "mil5.3.11:1.9_1": "paggaṇhe paggahārahan’ti,",
  "mil5.3.11:1.9_2": "tena hi ‘ahiṁsāya cara loke,",
  "mil5.3.11:1.9_3": "piyo hohisi maṁmivā’ti tampi vacanaṁ micchā.",
  "mil5.3.11:1.10_0": "Ayampi ubhato koṭiko pañho tavānuppatto, so tayā nibbāhitabbo”ti.",
  "mil5.3.11:2.1_0": "“Bhāsitampetaṁ, mahārāja, bhagavatā—",
  "mil5.3.11:2.2_0": "‘ahiṁsāya cara loke, piyo hohisi maṁmivā’ti, bhaṇitañca—",
  "mil5.3.11:2.3_0": "‘niggaṇhe niggahārahaṁ, paggaṇhe paggahārahan’ti.",
  "mil5.3.11:2.4_0": "‘Ahiṁsāya cara loke,",
  "mil5.3.11:2.4_1": "piyo hohisi maṁmivā’ti sabbesaṁ, mahārāja,",
  "mil5.3.11:2.4_2": "tathāgatānaṁ anumataṁ etaṁ,",
  "mil5.3.11:2.4_3": "esā anusiṭṭhi,",
  "mil5.3.11:2.4_4": "esā dhammadesanā,",
  "mil5.3.11:2.4_5": "dhammo hi, mahārāja,",
  "mil5.3.11:2.4_6": "ahiṁsālakkhaṇo,",
  "mil5.3.11:2.4_7": "sabhāvavacanaṁ etaṁ.",
  "mil5.3.11:2.5_0": "Yaṁ pana, mahārāja, tathāgato āha—",
  "mil5.3.11:2.6_0": "‘niggaṇhe niggahārahaṁ,",
  "mil5.3.11:2.6_1": "paggaṇhe paggahārahan’ti,",
  "mil5.3.11:2.6_2": "bhāsā esā, uddhataṁ, mahārāja,",
  "mil5.3.11:2.6_3": "cittaṁ niggahetabbaṁ,",
  "mil5.3.11:2.6_4": "līnaṁ cittaṁ paggahetabbaṁ.",
  "mil5.3.11:2.7_0": "Akusalaṁ cittaṁ niggahetabbaṁ, kusalaṁ cittaṁ paggahetabbaṁ.",
  "mil5.3.11:2.8_0": "Ayoniso manasikāro niggahetabbo, yoniso manasikāro paggahetabbo.",
  "mil5.3.11:2.9_0": "Micchāpaṭipanno niggahetabbo, sammāpaṭipanno paggahetabbo.",
  "mil5.3.11:2.10_0": "Anariyo niggahetabbo ariyo paggahetabbo.",
  "mil5.3.11:2.11_0": "Coro niggahetabbo, acoro paggahetabbo”ti.",
  "mil5.3.11:3.1_0": "“Hotu, bhante nāgasena, idāni tvaṁ paccāgatosi mama visayaṁ, yamahaṁ pucchāmi, so me attho upagato.",
  "mil5.3.11:3.2_0": "Coro pana, bhante nāgasena, niggaṇhantena kathaṁ niggahetabbo”ti?",
  "mil5.3.11:3.3_0": "“Coro, mahārāja,",
  "mil5.3.11:3.3_1": "niggaṇhantena evaṁ niggahetabbo,",
  "mil5.3.11:3.3_2": "paribhāsanīyo paribhāsitabbo,",
  "mil5.3.11:3.3_3": "daṇḍanīyo daṇḍetabbo,",
  "mil5.3.11:3.3_4": "pabbājanīyo pabbājetabbo,",
  "mil5.3.11:3.3_5": "bandhanīyo bandhitabbo,",
  "mil5.3.11:3.3_6": "ghātanīyo ghātetabbo”ti.",
  "mil5.3.11:3.4_0": "“Yaṁ pana, bhante nāgasena, corānaṁ ghātanaṁ, taṁ tathāgatānaṁ anumatan”ti?",
  "mil5.3.11:3.5_0": "“Na hi, mahārājā”ti.",
  "mil5.3.11:3.6_0": "“Kissa pana coro anusāsanīyo anumato tathāgatānan”ti?",
  "mil5.3.11:3.7_0": "“Yo so, mahārāja,",
  "mil5.3.11:3.7_1": "ghātīyati,",
  "mil5.3.11:3.7_2": "na so tathāgatānaṁ anumatiyā ghātīyati,",
  "mil5.3.11:3.7_3": "sayaṅkatena so ghātīyati,",
  "mil5.3.11:3.7_4": "api ca dhammānusiṭṭhiyā anusāsīyati,",
  "mil5.3.11:3.7_5": "sakkā pana, mahārāja,",
  "mil5.3.11:3.7_6": "tayā purisaṁ akārakaṁ anaparādhaṁ vīthiyaṁ carantaṁ gahetvā ghātayitun”ti?",
  "mil5.3.11:3.8_0": "“Na sakkā, bhante”ti.",
  "mil5.3.11:3.9_0": "“Kena kāraṇena, mahārājā”ti?",
  "mil5.3.11:3.10_0": "“Akārakattā, bhante”ti.",
  "mil5.3.11:3.11_0": "“Evameva kho, mahārāja,",
  "mil5.3.11:3.11_1": "na coro tathāgatānaṁ anumatiyā haññati,",
  "mil5.3.11:3.11_2": "sayaṅkatena so haññati,",
  "mil5.3.11:3.11_3": "kiṁ panettha anusāsako kiñci dosaṁ āpajjatī”ti?",
  "mil5.3.11:3.12_0": "“Na hi, bhante”ti.",
  "mil5.3.11:3.13_0": "“Tena hi, mahārāja, tathāgatānaṁ anusiṭṭhi sammānusiṭṭhi hotī”ti.",
  "mil5.3.11:3.14_0": "“Sādhu, bhante nāgasena, evametaṁ tathā sampaṭicchāmī”ti.",
  "mil5.3.11:4.1_0": "Ahiṁsāniggahapañho ekādasamo."
}