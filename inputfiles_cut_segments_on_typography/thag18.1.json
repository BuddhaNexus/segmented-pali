{
  "thag18.1:0.1_0": "Theragāthā 18.1",
  "thag18.1:0.2_0": "Cattālīsanipāta",
  "thag18.1:0.3_0": "Paṭhamavagga",
  "thag18.1:0.4_0": "Mahākassapattheragāthā",
  "thag18.1:1.1_0": "“Na gaṇena purakkhato care,",
  "thag18.1:1.2_0": "Vimano hoti samādhi dullabho;",
  "thag18.1:1.3_0": "Nānājanasaṅgaho dukho,",
  "thag18.1:1.4_0": "Iti disvāna gaṇaṁ na rocaye.",
  "thag18.1:2.1_0": "Na kulāni upabbaje muni,",
  "thag18.1:2.2_0": "Vimano hoti samādhi dullabho;",
  "thag18.1:2.3_0": "So ussukko rasānugiddho,",
  "thag18.1:2.4_0": "Atthaṁ riñcati yo sukhāvaho.",
  "thag18.1:3.1_0": "Paṅkoti hi naṁ avedayuṁ,",
  "thag18.1:3.2_0": "Yāyaṁ vandanapūjanā kulesu;",
  "thag18.1:3.3_0": "Sukhumaṁ sallaṁ durubbahaṁ,",
  "thag18.1:3.4_0": "Sakkāro kāpurisena dujjaho.",
  "thag18.1:4.1_0": "Senāsanamhā oruyha,",
  "thag18.1:4.2_0": "nagaraṁ piṇḍāya pāvisiṁ;",
  "thag18.1:4.3_0": "Bhuñjantaṁ purisaṁ kuṭṭhiṁ,",
  "thag18.1:4.4_0": "sakkaccaṁ taṁ upaṭṭhahiṁ.",
  "thag18.1:5.1_0": "So me pakkena hatthena,",
  "thag18.1:5.2_0": "ālopaṁ upanāmayi;",
  "thag18.1:5.3_0": "Ālopaṁ pakkhipantassa,",
  "thag18.1:5.4_0": "aṅguli cettha chijjatha.",
  "thag18.1:6.1_0": "Kuṭṭamūlañca nissāya,",
  "thag18.1:6.2_0": "ālopaṁ taṁ abhuñjisaṁ;",
  "thag18.1:6.3_0": "Bhuñjamāne vā bhutte vā,",
  "thag18.1:6.4_0": "jegucchaṁ me na vijjati.",
  "thag18.1:7.1_0": "Uttiṭṭhapiṇḍo āhāro,",
  "thag18.1:7.2_0": "pūtimuttañca osadhaṁ;",
  "thag18.1:7.3_0": "Senāsanaṁ rukkhamūlaṁ,",
  "thag18.1:7.4_0": "paṁsukūlañca cīvaraṁ;",
  "thag18.1:7.5_0": "Yassete abhisambhutvā,",
  "thag18.1:7.6_0": "sa ve cātuddiso naro.",
  "thag18.1:8.1_0": "Yattha eke vihaññanti,",
  "thag18.1:8.2_0": "āruhantā siluccayaṁ;",
  "thag18.1:8.3_0": "Tassa buddhassa dāyādo,",
  "thag18.1:8.4_0": "sampajāno patissato;",
  "thag18.1:8.5_0": "Iddhibalenupatthaddho,",
  "thag18.1:8.6_0": "kassapo abhirūhati.",
  "thag18.1:9.1_0": "Piṇḍapātapaṭikkanto,",
  "thag18.1:9.2_0": "selamāruyha kassapo;",
  "thag18.1:9.3_0": "Jhāyati anupādāno,",
  "thag18.1:9.4_0": "pahīnabhayabheravo.",
  "thag18.1:10.1_0": "Piṇḍapātapaṭikkanto,",
  "thag18.1:10.2_0": "selamāruyha kassapo;",
  "thag18.1:10.3_0": "Jhāyati anupādāno,",
  "thag18.1:10.4_0": "ḍayhamānesu nibbuto.",
  "thag18.1:11.1_0": "Piṇḍapātapaṭikkanto,",
  "thag18.1:11.2_0": "selamāruyha kassapo;",
  "thag18.1:11.3_0": "Jhāyati anupādāno,",
  "thag18.1:11.4_0": "katakicco anāsavo.",
  "thag18.1:12.1_0": "Karerimālāvitatā,",
  "thag18.1:12.2_0": "bhūmibhāgā manoramā;",
  "thag18.1:12.3_0": "Kuñjarābhirudā rammā,",
  "thag18.1:12.4_0": "te selā ramayanti maṁ.",
  "thag18.1:13.1_0": "Nīlabbhavaṇṇā rucirā,",
  "thag18.1:13.2_0": "vārisītā sucindharā;",
  "thag18.1:13.3_0": "Indagopakasañchannā,",
  "thag18.1:13.4_0": "te selā ramayanti maṁ.",
  "thag18.1:14.1_0": "Nīlabbhakūṭasadisā,",
  "thag18.1:14.2_0": "kūṭāgāravarūpamā;",
  "thag18.1:14.3_0": "Vāraṇābhirudā rammā,",
  "thag18.1:14.4_0": "te selā ramayanti maṁ.",
  "thag18.1:15.1_0": "Abhivuṭṭhā rammatalā,",
  "thag18.1:15.2_0": "nagā isibhi sevitā;",
  "thag18.1:15.3_0": "Abbhunnaditā sikhīhi,",
  "thag18.1:15.4_0": "te selā ramayanti maṁ.",
  "thag18.1:16.1_0": "Alaṁ jhāyitukāmassa,",
  "thag18.1:16.2_0": "pahitattassa me sato;",
  "thag18.1:16.3_0": "Alaṁ me atthakāmassa,",
  "thag18.1:16.4_0": "pahitattassa bhikkhuno.",
  "thag18.1:17.1_0": "Alaṁ me phāsukāmassa,",
  "thag18.1:17.2_0": "pahitattassa bhikkhuno;",
  "thag18.1:17.3_0": "Alaṁ me yogakāmassa,",
  "thag18.1:17.4_0": "pahitattassa tādino.",
  "thag18.1:18.1_0": "Umāpupphena samānā,",
  "thag18.1:18.2_0": "gaganāvabbhachāditā;",
  "thag18.1:18.3_0": "Nānādijagaṇākiṇṇā,",
  "thag18.1:18.4_0": "te selā ramayanti maṁ.",
  "thag18.1:19.1_0": "Anākiṇṇā gahaṭṭhehi,",
  "thag18.1:19.2_0": "migasaṅghanisevitā;",
  "thag18.1:19.3_0": "Nānādijagaṇākiṇṇā,",
  "thag18.1:19.4_0": "te selā ramayanti maṁ.",
  "thag18.1:20.1_0": "Acchodikā puthusilā,",
  "thag18.1:20.2_0": "gonaṅgulamigāyutā;",
  "thag18.1:20.3_0": "Ambusevālasañchannā,",
  "thag18.1:20.4_0": "te selā ramayanti maṁ.",
  "thag18.1:21.1_0": "Na pañcaṅgikena turiyena,",
  "thag18.1:21.2_0": "Rati me hoti tādisī;",
  "thag18.1:21.3_0": "Yathā ekaggacittassa,",
  "thag18.1:21.4_0": "Sammā dhammaṁ vipassato.",
  "thag18.1:22.1_0": "Kammaṁ bahukaṁ na kāraye,",
  "thag18.1:22.2_0": "Parivajjeyya janaṁ na uyyame;",
  "thag18.1:22.3_0": "Ussukko so rasānugiddho,",
  "thag18.1:22.4_0": "Atthaṁ riñcati yo sukhāvaho.",
  "thag18.1:23.1_0": "Kammaṁ bahukaṁ na kāraye,",
  "thag18.1:23.2_0": "Parivajjeyya anattaneyyametaṁ;",
  "thag18.1:23.3_0": "Kicchati kāyo kilamati,",
  "thag18.1:23.4_0": "Dukkhito so samathaṁ na vindati.",
  "thag18.1:24.1_0": "Oṭṭhappahatamattena,",
  "thag18.1:24.2_0": "attānampi na passati;",
  "thag18.1:24.3_0": "Patthaddhagīvo carati,",
  "thag18.1:24.4_0": "ahaṁ seyyoti maññati.",
  "thag18.1:25.1_0": "Aseyyo seyyasamānaṁ,",
  "thag18.1:25.2_0": "bālo maññati attānaṁ;",
  "thag18.1:25.3_0": "Na taṁ viññū pasaṁsanti,",
  "thag18.1:25.4_0": "patthaddhamānasaṁ naraṁ.",
  "thag18.1:26.1_0": "Yo ca seyyohamasmīti,",
  "thag18.1:26.2_0": "nāhaṁ seyyoti vā pana;",
  "thag18.1:26.3_0": "Hīno taṁsadiso vāti,",
  "thag18.1:26.4_0": "vidhāsu na vikampati.",
  "thag18.1:27.1_0": "Paññavantaṁ tathā tādiṁ,",
  "thag18.1:27.2_0": "sīlesu susamāhitaṁ;",
  "thag18.1:27.3_0": "Cetosamathamanuttaṁ,",
  "thag18.1:27.4_0": "tañce viññū pasaṁsare.",
  "thag18.1:28.1_0": "Yassa sabrahmacārīsu,",
  "thag18.1:28.2_0": "gāravo nūpalabbhati;",
  "thag18.1:28.3_0": "Ārakā hoti saddhammā,",
  "thag18.1:28.4_0": "nabhato puthavī yathā.",
  "thag18.1:29.1_0": "Yesañca hiriottappaṁ,",
  "thag18.1:29.2_0": "sadā sammā upaṭṭhitaṁ;",
  "thag18.1:29.3_0": "Virūḷhabrahmacariyā te,",
  "thag18.1:29.4_0": "tesaṁ khīṇā punabbhavā.",
  "thag18.1:30.1_0": "Uddhato capalo bhikkhu,",
  "thag18.1:30.2_0": "paṁsukūlena pāruto;",
  "thag18.1:30.3_0": "Kapīva sīhacammena,",
  "thag18.1:30.4_0": "na so tenupasobhati.",
  "thag18.1:31.1_0": "Anuddhato acapalo,",
  "thag18.1:31.2_0": "nipako saṁvutindriyo;",
  "thag18.1:31.3_0": "Sobhati paṁsukūlena,",
  "thag18.1:31.4_0": "sīhova girigabbhare.",
  "thag18.1:32.1_0": "Ete sambahulā devā,",
  "thag18.1:32.2_0": "iddhimanto yasassino;",
  "thag18.1:32.3_0": "Dasadevasahassāni,",
  "thag18.1:32.4_0": "sabbe te brahmakāyikā.",
  "thag18.1:33.1_0": "Dhammasenāpatiṁ vīraṁ,",
  "thag18.1:33.2_0": "mahājhāyiṁ samāhitaṁ;",
  "thag18.1:33.3_0": "Sāriputtaṁ namassantā,",
  "thag18.1:33.4_0": "tiṭṭhanti pañjalīkatā.",
  "thag18.1:34.1_0": "‘Namo te purisājañña,",
  "thag18.1:34.2_0": "namo te purisuttama;",
  "thag18.1:34.3_0": "Yassa te nābhijānāma,",
  "thag18.1:34.4_0": "yampi nissāya jhāyati.",
  "thag18.1:35.1_0": "Accheraṁ vata buddhānaṁ,",
  "thag18.1:35.2_0": "gambhīro gocaro sako;",
  "thag18.1:35.3_0": "Ye mayaṁ nābhijānāma,",
  "thag18.1:35.4_0": "vālavedhisamāgatā’.",
  "thag18.1:36.1_0": "Taṁ tathā devakāyehi,",
  "thag18.1:36.2_0": "pūjitaṁ pūjanārahaṁ;",
  "thag18.1:36.3_0": "Sāriputtaṁ tadā disvā,",
  "thag18.1:36.4_0": "kappinassa sitaṁ ahu.",
  "thag18.1:37.1_0": "Yāvatā buddhakhettamhi,",
  "thag18.1:37.2_0": "ṭhapayitvā mahāmuniṁ;",
  "thag18.1:37.3_0": "Dhutaguṇe visiṭṭhohaṁ,",
  "thag18.1:37.4_0": "sadiso me na vijjati.",
  "thag18.1:38.1_0": "Pariciṇṇo mayā satthā,",
  "thag18.1:38.2_0": "kataṁ buddhassa sāsanaṁ;",
  "thag18.1:38.3_0": "Ohito garuko bhāro,",
  "thag18.1:38.4_0": "natthi dāni punabbhavo.",
  "thag18.1:39.1_0": "Na cīvare na sayane,",
  "thag18.1:39.2_0": "bhojane nupalimpati;",
  "thag18.1:39.3_0": "Gotamo anappameyyo,",
  "thag18.1:39.4_0": "muḷālapupphaṁ vimalaṁva;",
  "thag18.1:39.5_0": "Ambunā nekkhammaninno,",
  "thag18.1:39.6_0": "tibhavābhinissaṭo.",
  "thag18.1:40.1_0": "Satipaṭṭhānagīvo so,",
  "thag18.1:40.2_0": "saddhāhattho mahāmuni;",
  "thag18.1:40.3_0": "Paññāsīso mahāñāṇī,",
  "thag18.1:40.4_0": "sadā carati nibbuto”ti.",
  "thag18.1:40.5_0": "… Mahākassapo thero …",
  "thag18.1:40.6_0": "Cattālīsanipāto niṭṭhito.",
  "thag18.1:41.0_0": "Tatruddānaṁ",
  "thag18.1:41.1_0": "Cattālīsanipātamhi,",
  "thag18.1:41.2_0": "mahākassapasavhayo;",
  "thag18.1:41.3_0": "Ekova thero gāthāyo,",
  "thag18.1:41.4_0": "cattālīsa duvepi cāti."
}