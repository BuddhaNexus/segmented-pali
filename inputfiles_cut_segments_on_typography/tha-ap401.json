{
  "tha-ap401:0.1_0": "Therāpadāna",
  "tha-ap401:0.2_0": "Pilindavacchavagga",
  "tha-ap401:0.3_0": "9. Sabbadāyakattheraapadāna",
  "tha-ap401:1.1_0": "“Mahāsamuddaṁ ogayha,",
  "tha-ap401:1.2_0": "bhavanaṁ me sunimmitaṁ;",
  "tha-ap401:1.3_0": "Sunimmitā pokkharaṇī,",
  "tha-ap401:1.4_0": "cakkavākapakūjitā.",
  "tha-ap401:2.1_0": "Mandālakehi sañchannā,",
  "tha-ap401:2.2_0": "padumuppalakehi ca;",
  "tha-ap401:2.3_0": "Nadī ca sandate tattha,",
  "tha-ap401:2.4_0": "supatitthā manoramā.",
  "tha-ap401:3.1_0": "Macchakacchapasañchannā,",
  "tha-ap401:3.2_0": "nānādijasamotthatā;",
  "tha-ap401:3.3_0": "Mayūrakoñcābhirudā,",
  "tha-ap401:3.4_0": "kokilādīhi vagguhi.",
  "tha-ap401:4.1_0": "Pārevatā ravihaṁsā ca,",
  "tha-ap401:4.2_0": "cakkavākā nadīcarā;",
  "tha-ap401:4.3_0": "Dindibhā sāḷikā cettha,",
  "tha-ap401:4.4_0": "pampakā jīvajīvakā.",
  "tha-ap401:5.1_0": "Haṁsā koñcāpi naditā,",
  "tha-ap401:5.2_0": "kosiyā piṅgalā bahū;",
  "tha-ap401:5.3_0": "Sattaratanasampannā,",
  "tha-ap401:5.4_0": "maṇimuttikavālukā.",
  "tha-ap401:6.1_0": "Sabbasoṇṇamayā rukkhā,",
  "tha-ap401:6.2_0": "nānāgandhasameritā;",
  "tha-ap401:6.3_0": "Ujjotenti divārattiṁ,",
  "tha-ap401:6.4_0": "bhavanaṁ sabbakālikaṁ.",
  "tha-ap401:7.1_0": "Saṭṭhi tūriyasahassāni,",
  "tha-ap401:7.2_0": "sāyaṁ pāto pavajjare;",
  "tha-ap401:7.3_0": "Soḷasitthisahassāni,",
  "tha-ap401:7.4_0": "parivārenti maṁ sadā.",
  "tha-ap401:8.1_0": "Abhinikkhamma bhavanā,",
  "tha-ap401:8.2_0": "sumedhaṁ lokanāyakaṁ;",
  "tha-ap401:8.3_0": "Pasannacitto sumano,",
  "tha-ap401:8.4_0": "vandayiṁ taṁ mahāyasaṁ.",
  "tha-ap401:9.1_0": "Sambuddhaṁ abhivādetvā,",
  "tha-ap401:9.2_0": "sasaṅghaṁ taṁ nimantayiṁ;",
  "tha-ap401:9.3_0": "Adhivāsesi so dhīro,",
  "tha-ap401:9.4_0": "sumedho lokanāyako.",
  "tha-ap401:10.1_0": "Mama dhammakathaṁ katvā,",
  "tha-ap401:10.2_0": "uyyojesi mahāmuni;",
  "tha-ap401:10.3_0": "Sambuddhaṁ abhivādetvā,",
  "tha-ap401:10.4_0": "bhavanaṁ me upāgamiṁ.",
  "tha-ap401:11.1_0": "Āmantayiṁ parijanaṁ,",
  "tha-ap401:11.2_0": "‘sabbe sannipatātha vo;",
  "tha-ap401:11.3_0": "Pubbaṇhasamayaṁ buddho,",
  "tha-ap401:11.4_0": "bhavanaṁ āgamissati.",
  "tha-ap401:12.1_0": "Lābhā amhaṁ suladdhaṁ no,",
  "tha-ap401:12.2_0": "ye vasāma tavantike;",
  "tha-ap401:12.3_0": "Mayampi buddhaseṭṭhassa,",
  "tha-ap401:12.4_0": "pūjaṁ kassāma satthuno’.",
  "tha-ap401:13.1_0": "Annapānaṁ paṭṭhapetvā,",
  "tha-ap401:13.2_0": "kālaṁ ārocayiṁ ahaṁ;",
  "tha-ap401:13.3_0": "Vasīsatasahassehi,",
  "tha-ap401:13.4_0": "upesi lokanāyako.",
  "tha-ap401:14.1_0": "Pañcaṅgikehi tūriyehi,",
  "tha-ap401:14.2_0": "paccuggamanamakāsahaṁ;",
  "tha-ap401:14.3_0": "Sabbasoṇṇamaye pīṭhe,",
  "tha-ap401:14.4_0": "nisīdi purisuttamo.",
  "tha-ap401:15.1_0": "Uparicchadanaṁ āsi,",
  "tha-ap401:15.2_0": "sabbasoṇṇamayaṁ tadā;",
  "tha-ap401:15.3_0": "Bījaniyo pavāyanti,",
  "tha-ap401:15.4_0": "bhikkhusaṅghassa antare.",
  "tha-ap401:16.1_0": "Pahūtenannapānena,",
  "tha-ap401:16.2_0": "bhikkhusaṅghamatappayiṁ;",
  "tha-ap401:16.3_0": "Paccekadussayugaḷe,",
  "tha-ap401:16.4_0": "bhikkhusaṅghassadāsahaṁ.",
  "tha-ap401:17.1_0": "Yaṁ vadanti sumedhoti,",
  "tha-ap401:17.2_0": "lokāhutipaṭiggahaṁ;",
  "tha-ap401:17.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap401:17.4_0": "imā gāthā abhāsatha.",
  "tha-ap401:18.1_0": "‘Yo me annena pānena,",
  "tha-ap401:18.2_0": "sabbe ime ca tappayiṁ;",
  "tha-ap401:18.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap401:18.4_0": "suṇātha mama bhāsato.",
  "tha-ap401:19.1_0": "Aṭṭhārase kappasate,",
  "tha-ap401:19.2_0": "devaloke ramissati;",
  "tha-ap401:19.3_0": "Sahassakkhattuṁ rājā ca,",
  "tha-ap401:19.4_0": "cakkavattī bhavissati.",
  "tha-ap401:20.1_0": "Upapajjati yaṁ yoniṁ,",
  "tha-ap401:20.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap401:20.3_0": "Sabbadā sabbasovaṇṇaṁ,",
  "tha-ap401:20.4_0": "chadanaṁ dhārayissati.",
  "tha-ap401:21.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap401:21.2_0": "okkākakulasambhavo;",
  "tha-ap401:21.3_0": "Gotamo nāma gottena,",
  "tha-ap401:21.4_0": "satthā loke bhavissati.",
  "tha-ap401:22.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap401:22.2_0": "oraso dhammanimmito;",
  "tha-ap401:22.3_0": "Sabbāsave pariññāya,",
  "tha-ap401:22.4_0": "nibbāyissatināsavo.",
  "tha-ap401:23.1_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap401:23.2_0": "sīhanādaṁ nadissati;",
  "tha-ap401:23.3_0": "Citake chattaṁ dhārenti,",
  "tha-ap401:23.4_0": "heṭṭhā chattamhi ḍayhatha’.",
  "tha-ap401:24.1_0": "Sāmaññaṁ me anuppattaṁ,",
  "tha-ap401:24.2_0": "kilesā jhāpitā mayā;",
  "tha-ap401:24.3_0": "Maṇḍape rukkhamūle vā,",
  "tha-ap401:24.4_0": "santāpo me na vijjati.",
  "tha-ap401:25.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap401:25.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap401:25.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap401:25.4_0": "sabbadānassidaṁ phalaṁ.",
  "tha-ap401:26.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap401:26.2_0": "…pe…",
  "tha-ap401:26.3_0": "viharāmi anāsavo.",
  "tha-ap401:27.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap401:27.2_0": "…pe…",
  "tha-ap401:27.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap401:28.1_0": "Paṭisambhidā catasso,",
  "tha-ap401:28.2_0": "…pe…",
  "tha-ap401:28.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap401:29.1_0": "Itthaṁ sudaṁ āyasmā sabbadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap401:30.1_0": "Sabbadāyakattherassāpadānaṁ navamaṁ."
}