{
  "thag3.8:0.1_0": "Theragāthā 3.8",
  "thag3.8:0.2_0": "Tikanipāta",
  "thag3.8:0.3_0": "Paṭhamavagga",
  "thag3.8:0.4_0": "Vassikattheragāthā",
  "thag3.8:1.1_0": "“Ekopi saddho medhāvī,",
  "thag3.8:1.2_0": "assaddhānīdha ñātinaṁ;",
  "thag3.8:1.3_0": "Dhammaṭṭho sīlasampanno,",
  "thag3.8:1.4_0": "hoti atthāya bandhunaṁ.",
  "thag3.8:2.1_0": "Niggayha anukampāya,",
  "thag3.8:2.2_0": "coditā ñātayo mayā;",
  "thag3.8:2.3_0": "Ñātibandhavapemena,",
  "thag3.8:2.4_0": "kāraṁ katvāna bhikkhusu.",
  "thag3.8:3.1_0": "Te abbhatītā kālaṅkatā,",
  "thag3.8:3.2_0": "pattā te tidivaṁ sukhaṁ;",
  "thag3.8:3.3_0": "Bhātaro mayhaṁ mātā ca,",
  "thag3.8:3.4_0": "modanti kāmakāmino”ti.",
  "thag3.8:3.5_0": "… Vassiko thero …."
}