{
  "cp11:0.1_0": "Cariyāpiṭaka",
  "cp11:0.2_0": "Hatthināgavagga",
  "cp11:0.3_0": "Sīlapāramī 1",
  "cp11:0.4_0": "Mātuposakacariya",
  "cp11:1.1_0": "“Yadā ahosiṁ pavane,",
  "cp11:1.2_0": "kuñjaro mātuposako;",
  "cp11:1.3_0": "Na tadā atthi mahiyā,",
  "cp11:1.4_0": "guṇena mama sādiso.",
  "cp11:2.1_0": "Pavane disvā vanacaro,",
  "cp11:2.2_0": "rañño maṁ paṭivedayi;",
  "cp11:2.3_0": "‘Tavānucchavo mahārāja,",
  "cp11:2.4_0": "gajo vasati kānane.",
  "cp11:3.1_0": "Na tassa parikkhāyattho,",
  "cp11:3.2_0": "napi āḷakakāsuyā;",
  "cp11:3.3_0": "Saha gahite soṇḍāya,",
  "cp11:3.4_0": "sayameva idhehi’ti.",
  "cp11:4.1_0": "Tassa taṁ vacanaṁ sutvā,",
  "cp11:4.2_0": "rājāpi tuṭṭhamānaso;",
  "cp11:4.3_0": "Pesesi hatthidamakaṁ,",
  "cp11:4.4_0": "chekācariyaṁ susikkhitaṁ.",
  "cp11:5.1_0": "Gantvā so hatthidamako,",
  "cp11:5.2_0": "addasa padumassare;",
  "cp11:5.3_0": "Bhisamuḷālaṁ uddharantaṁ,",
  "cp11:5.4_0": "yāpanatthāya mātuyā.",
  "cp11:6.1_0": "Viññāya me sīlaguṇaṁ,",
  "cp11:6.2_0": "lakkhaṇaṁ upadhārayi;",
  "cp11:6.3_0": "‘Ehi puttā’ti vatvāna,",
  "cp11:6.4_0": "mama soṇḍāya aggahi.",
  "cp11:7.1_0": "Yaṁ me tadā pākatikaṁ,",
  "cp11:7.2_0": "sarīrānugataṁ balaṁ;",
  "cp11:7.3_0": "Ajja nāgasahassānaṁ,",
  "cp11:7.4_0": "balena samasādisaṁ.",
  "cp11:8.1_0": "Yadihaṁ tesaṁ pakuppeyyaṁ,",
  "cp11:8.2_0": "upetānaṁ gahaṇāya maṁ;",
  "cp11:8.3_0": "Paṭibalo bhave tesaṁ,",
  "cp11:8.4_0": "yāva rajjampi mānusaṁ.",
  "cp11:9.1_0": "Api cāhaṁ sīlarakkhāya,",
  "cp11:9.2_0": "Sīlapāramipūriyā;",
  "cp11:9.3_0": "Na karomi citte aññathattaṁ,",
  "cp11:9.4_0": "Pakkhipantaṁ mamāḷake.",
  "cp11:10.1_0": "Yadi te maṁ tattha koṭṭeyyuṁ,",
  "cp11:10.2_0": "pharasūhi tomarehi ca;",
  "cp11:10.3_0": "Neva tesaṁ pakuppeyyaṁ,",
  "cp11:10.4_0": "sīlakhaṇḍabhayā mamā”ti.",
  "cp11:11.1_0": "Mātuposakacariyaṁ paṭhamaṁ."
}