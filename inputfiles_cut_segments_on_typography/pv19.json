{
  "pv19:0.1_0": "Petavatthu",
  "pv19:0.2_0": "Ubbarivagga",
  "pv19:0.3_0": "7. Dhanapālaseṭṭhipetavatthu",
  "pv19:1.1_0": "“Naggo dubbaṇṇarūposi,",
  "pv19:1.2_0": "kiso dhamanisanthato;",
  "pv19:1.3_0": "Upphāsuliko kisiko,",
  "pv19:1.4_0": "ko nu tvamasi mārisa”.",
  "pv19:2.1_0": "“Ahaṁ bhadante petomhi,",
  "pv19:2.2_0": "duggato yamalokiko;",
  "pv19:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv19:2.4_0": "petalokaṁ ito gato”.",
  "pv19:3.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv19:3.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv19:3.3_0": "Kissa kammavipākena,",
  "pv19:3.4_0": "petalokaṁ ito gato”.",
  "pv19:4.1_0": "“Nagaraṁ atthi paṇṇānaṁ,",
  "pv19:4.2_0": "erakacchanti vissutaṁ;",
  "pv19:4.3_0": "Tattha seṭṭhi pure āsiṁ,",
  "pv19:4.4_0": "dhanapāloti maṁ vidū.",
  "pv19:5.1_0": "Asīti sakaṭavāhānaṁ,",
  "pv19:5.2_0": "hiraññassa ahosi me;",
  "pv19:5.3_0": "Pahūtaṁ me jātarūpaṁ,",
  "pv19:5.4_0": "muttā veḷuriyā bahū.",
  "pv19:6.1_0": "Tāva mahaddhanassāpi,",
  "pv19:6.2_0": "na me dātuṁ piyaṁ ahu;",
  "pv19:6.3_0": "Pidahitvā dvāraṁ bhuñjiṁ,",
  "pv19:6.4_0": "mā maṁ yācanakāddasuṁ.",
  "pv19:7.1_0": "Assaddho maccharī cāsiṁ,",
  "pv19:7.2_0": "kadariyo paribhāsako;",
  "pv19:7.3_0": "Dadantānaṁ karontānaṁ,",
  "pv19:7.4_0": "vārayissaṁ bahū jane.",
  "pv19:8.1_0": "Vipāko natthi dānassa,",
  "pv19:8.2_0": "saṁyamassa kuto phalaṁ;",
  "pv19:8.3_0": "Pokkharaññodapānāni,",
  "pv19:8.4_0": "ārāmāni ca ropite;",
  "pv19:8.5_0": "Papāyo ca vināsesiṁ,",
  "pv19:8.6_0": "dugge saṅkamanāni ca.",
  "pv19:9.1_0": "Svāhaṁ akatakalyāṇo,",
  "pv19:9.2_0": "katapāpo tato cuto;",
  "pv19:9.3_0": "Upapanno pettivisayaṁ,",
  "pv19:9.4_0": "khuppipāsasamappito.",
  "pv19:10.1_0": "Pañcapaṇṇāsavassāni,",
  "pv19:10.2_0": "yato kālaṅkato ahaṁ;",
  "pv19:10.3_0": "Nābhijānāmi bhuttaṁ vā,",
  "pv19:10.4_0": "pītaṁ vā pana pāniyaṁ.",
  "pv19:11.1_0": "Yo saṁyamo so vināso,",
  "pv19:11.2_0": "yo vināso so saṁyamo;",
  "pv19:11.3_0": "Petā hi kira jānanti,",
  "pv19:11.4_0": "yo saṁyamo so vināso.",
  "pv19:12.1_0": "Ahaṁ pure saṁyamissaṁ,",
  "pv19:12.2_0": "nādāsiṁ bahuke dhane;",
  "pv19:12.3_0": "Santesu deyyadhammesu,",
  "pv19:12.4_0": "dīpaṁ nākāsimattano;",
  "pv19:12.5_0": "Svāhaṁ pacchānutappāmi,",
  "pv19:12.6_0": "attakammaphalūpago.",
  "pv19:13.1_0": "Uddhaṁ catūhi māsehi,",
  "pv19:13.2_0": "kālaṅkiriyā bhavissati;",
  "pv19:13.3_0": "Ekantakaṭukaṁ ghoraṁ,",
  "pv19:13.4_0": "nirayaṁ papatissahaṁ.",
  "pv19:14.1_0": "Catukkaṇṇaṁ catudvāraṁ,",
  "pv19:14.2_0": "vibhattaṁ bhāgaso mitaṁ;",
  "pv19:14.3_0": "Ayopākārapariyantaṁ,",
  "pv19:14.4_0": "ayasā paṭikujjitaṁ.",
  "pv19:15.1_0": "Tassa ayomayā bhūmi,",
  "pv19:15.2_0": "jalitā tejasā yutā;",
  "pv19:15.3_0": "Samantā yojanasataṁ,",
  "pv19:15.4_0": "pharitvā tiṭṭhati sabbadā.",
  "pv19:16.1_0": "Tatthāhaṁ dīghamaddhānaṁ,",
  "pv19:16.2_0": "Dukkhaṁ vedissa vedanaṁ;",
  "pv19:16.3_0": "Phalaṁ pāpassa kammassa,",
  "pv19:16.4_0": "Tasmā socāmahaṁ bhusaṁ.",
  "pv19:17.1_0": "Taṁ vo vadāmi bhaddaṁ vo,",
  "pv19:17.2_0": "yāvantettha samāgatā;",
  "pv19:17.3_0": "Mākattha pāpakaṁ kammaṁ,",
  "pv19:17.4_0": "āvi vā yadi vā raho.",
  "pv19:18.1_0": "Sace taṁ pāpakaṁ kammaṁ,",
  "pv19:18.2_0": "karissatha karotha vā;",
  "pv19:18.3_0": "Na vo dukkhā pamutyatthi,",
  "pv19:18.4_0": "uppaccāpi palāyataṁ.",
  "pv19:19.1_0": "Matteyyā hotha petteyyā,",
  "pv19:19.2_0": "kule jeṭṭhāpacāyikā;",
  "pv19:19.3_0": "Sāmaññā hotha brahmaññā,",
  "pv19:19.4_0": "evaṁ saggaṁ gamissathā”ti.",
  "pv19:20.1_0": "Dhanapālaseṭṭhipetavatthu sattamaṁ."
}