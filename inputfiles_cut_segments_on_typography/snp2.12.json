{
  "snp2.12:0.1_0": "Sutta Nipāta 2.12",
  "snp2.12:0.2_0": "Nigrodhakappa (vaṅgīsa) sutta",
  "snp2.12:1.1_0": "Evaṁ me sutaṁ—",
  "snp2.12:1.2_0": "ekaṁ samayaṁ bhagavā āḷaviyaṁ viharati aggāḷave cetiye.",
  "snp2.12:1.3_0": "Tena kho pana samayena āyasmato vaṅgīsassa upajjhāyo nigrodhakappo nāma thero aggāḷave cetiye aciraparinibbuto hoti.",
  "snp2.12:1.4_0": "Atha kho āyasmato vaṅgīsassa rahogatassa paṭisallīnassa evaṁ cetaso parivitakko udapādi—",
  "snp2.12:1.5_0": "parinibbuto nu kho me upajjhāyo udāhu no parinibbutoti?",
  "snp2.12:1.6_0": "Atha kho āyasmā vaṅgīso sāyanhasamayaṁ paṭisallānā vuṭṭhito yena bhagavā tenupasaṅkami;",
  "snp2.12:1.6_1": "upasaṅkamitvā bhagavantaṁ abhivādetvā ekamantaṁ nisīdi.",
  "snp2.12:1.6_2": "Ekamantaṁ nisinno kho āyasmā vaṅgīso bhagavantaṁ etadavoca—",
  "snp2.12:1.7_0": "idha mayhaṁ, bhante, rahogatassa paṭisallīnassa evaṁ cetaso parivitakko udapādi—",
  "snp2.12:1.8_0": "parinibbuto nu kho me upajjhāyo, udāhu no parinibbutoti.",
  "snp2.12:1.9_0": "Atha kho āyasmā vaṅgīso uṭṭhāyāsanā ekaṁsaṁ cīvaraṁ katvā yena bhagavā tenañjaliṁ paṇāmetvā bhagavantaṁ gāthāya ajjhabhāsi:",
  "snp2.12:2.1_0": "“Pucchāmi satthāramanomapaññaṁ,",
  "snp2.12:2.2_0": "Diṭṭheva dhamme yo vicikicchānaṁ chettā;",
  "snp2.12:2.3_0": "Aggāḷave kālamakāsi bhikkhu,",
  "snp2.12:2.4_0": "Ñāto yasassī abhinibbutatto.",
  "snp2.12:3.1_0": "Nigrodhakappo iti tassa nāmaṁ,",
  "snp2.12:3.2_0": "Tayā kataṁ bhagavā brāhmaṇassa;",
  "snp2.12:3.3_0": "So taṁ namassaṁ acari mutyapekkho,",
  "snp2.12:3.4_0": "Āraddhaviriyo daḷhadhammadassī.",
  "snp2.12:4.1_0": "Taṁ sāvakaṁ sakya mayampi sabbe,",
  "snp2.12:4.2_0": "Aññātumicchāma samantacakkhu;",
  "snp2.12:4.3_0": "Samavaṭṭhitā no savanāya sotā,",
  "snp2.12:4.4_0": "Tuvaṁ no satthā tvamanuttarosi.",
  "snp2.12:5.1_0": "Chindeva no vicikicchaṁ brūhi metaṁ,",
  "snp2.12:5.2_0": "Parinibbutaṁ vedaya bhūripañña;",
  "snp2.12:5.3_0": "Majjheva no bhāsa samantacakkhu,",
  "snp2.12:5.4_0": "Sakkova devāna sahassanetto.",
  "snp2.12:6.1_0": "Ye keci ganthā idha mohamaggā,",
  "snp2.12:6.2_0": "Aññāṇapakkhā vicikicchaṭhānā;",
  "snp2.12:6.3_0": "Tathāgataṁ patvā na te bhavanti,",
  "snp2.12:6.4_0": "Cakkhuñhi etaṁ paramaṁ narānaṁ.",
  "snp2.12:7.1_0": "No ce hi jātu puriso kilese,",
  "snp2.12:7.2_0": "Vāto yathā abbhaghanaṁ vihāne;",
  "snp2.12:7.3_0": "Tamovassa nivuto sabbaloko,",
  "snp2.12:7.4_0": "Na jotimantopi narā tapeyyuṁ.",
  "snp2.12:8.1_0": "Dhīrā ca pajjotakarā bhavanti,",
  "snp2.12:8.2_0": "Taṁ taṁ ahaṁ vīra tatheva maññe;",
  "snp2.12:8.3_0": "Vipassinaṁ jānamupāgamumhā,",
  "snp2.12:8.4_0": "Parisāsu no āvikarohi kappaṁ.",
  "snp2.12:9.1_0": "Khippaṁ giraṁ eraya vaggu vagguṁ,",
  "snp2.12:9.2_0": "Haṁsova paggayha saṇikaṁ nikūja;",
  "snp2.12:9.3_0": "Bindussarena suvikappitena,",
  "snp2.12:9.4_0": "Sabbeva te ujjugatā suṇoma.",
  "snp2.12:10.1_0": "Pahīnajātimaraṇaṁ asesaṁ,",
  "snp2.12:10.2_0": "Niggayha dhonaṁ vadessāmi dhammaṁ;",
  "snp2.12:10.3_0": "Na kāmakāro hi puthujjanānaṁ,",
  "snp2.12:10.4_0": "Saṅkheyyakāro ca tathāgatānaṁ.",
  "snp2.12:11.1_0": "Sampannaveyyākaraṇaṁ tavedaṁ,",
  "snp2.12:11.2_0": "Samujjupaññassa samuggahītaṁ;",
  "snp2.12:11.3_0": "Ayamañjalī pacchimo suppaṇāmito,",
  "snp2.12:11.4_0": "Mā mohayī jānamanomapañña.",
  "snp2.12:12.1_0": "Parovaraṁ ariyadhammaṁ viditvā,",
  "snp2.12:12.2_0": "Mā mohayī jānamanomavīra;",
  "snp2.12:12.3_0": "Vāriṁ yathā ghammani ghammatatto,",
  "snp2.12:12.4_0": "Vācābhikaṅkhāmi sutaṁ pavassa.",
  "snp2.12:13.1_0": "Yadatthikaṁ brahmacariyaṁ acarī,",
  "snp2.12:13.2_0": "Kappāyano kaccissa taṁ amoghaṁ;",
  "snp2.12:13.3_0": "Nibbāyi so ādu saupādiseso,",
  "snp2.12:13.4_0": "Yathā vimutto ahu taṁ suṇoma”.",
  "snp2.12:14.1_0": "“Acchecchi taṇhaṁ idha nāmarūpe,",
  "snp2.12:14.2_0": "(iti bhagavā)",
  "snp2.12:14.3_0": "Kaṇhassa sotaṁ dīgharattānusayitaṁ;",
  "snp2.12:14.4_0": "Atāri jātiṁ maraṇaṁ asesaṁ”,",
  "snp2.12:14.5_0": "Iccabravī bhagavā pañcaseṭṭho.",
  "snp2.12:15.1_0": "“Esa sutvā pasīdāmi,",
  "snp2.12:15.2_0": "Vaco te isisattama;",
  "snp2.12:15.3_0": "Amoghaṁ kira me puṭṭhaṁ,",
  "snp2.12:15.4_0": "Na maṁ vañcesi brāhmaṇo.",
  "snp2.12:16.1_0": "Yathāvādī tathākārī,",
  "snp2.12:16.2_0": "Ahu buddhassa sāvako;",
  "snp2.12:16.3_0": "Acchidā maccuno jālaṁ,",
  "snp2.12:16.4_0": "Tataṁ māyāvino daḷhaṁ.",
  "snp2.12:17.1_0": "Addasā bhagavā ādiṁ,",
  "snp2.12:17.2_0": "Upādānassa kappiyo;",
  "snp2.12:17.3_0": "Accagā vata kappāyano,",
  "snp2.12:17.4_0": "Maccudheyyaṁ suduttaran”ti.",
  "snp2.12:17.5_0": "Nigrodhakappasuttaṁ dvādasamaṁ."
}