{
  "thig10.1:0.1_0": "Therīgāthā 10.1",
  "thig10.1:0.2_0": "Ekādasakanipāta",
  "thig10.1:0.3_0": "Kisāgotamītherīgāthā",
  "thig10.1:1.1_0": "“Kalyāṇamittatā muninā,",
  "thig10.1:1.2_0": "lokaṁ ādissa vaṇṇitā;",
  "thig10.1:1.3_0": "Kalyāṇamitte bhajamāno,",
  "thig10.1:1.4_0": "api bālo paṇḍito assa.",
  "thig10.1:2.1_0": "Bhajitabbā sappurisā,",
  "thig10.1:2.2_0": "Paññā tathā vaḍḍhati bhajantānaṁ;",
  "thig10.1:2.3_0": "Bhajamāno sappurise,",
  "thig10.1:2.4_0": "Sabbehipi dukkhehi pamucceyya.",
  "thig10.1:3.1_0": "Dukkhañca vijāneyya,",
  "thig10.1:3.2_0": "Dukkhassa ca samudayaṁ nirodhaṁ;",
  "thig10.1:3.3_0": "Aṭṭhaṅgikañca maggaṁ,",
  "thig10.1:3.4_0": "Cattāripi ariyasaccāni”.",
  "thig10.1:4.1_0": "“Dukkho itthibhāvo,",
  "thig10.1:4.2_0": "Akkhāto purisadammasārathinā;",
  "thig10.1:4.3_0": "Sapattikampi hi dukkhaṁ,",
  "thig10.1:4.4_0": "Appekaccā sakiṁ vijātāyo.",
  "thig10.1:5.1_0": "Galake api kantanti,",
  "thig10.1:5.2_0": "Sukhumāliniyo visāni khādanti;",
  "thig10.1:5.3_0": "Janamārakamajjhagatā,",
  "thig10.1:5.4_0": "Ubhopi byasanāni anubhonti”.",
  "thig10.1:6.1_0": "“Upavijaññā gacchantī,",
  "thig10.1:6.2_0": "addasāhaṁ patiṁ mataṁ;",
  "thig10.1:6.3_0": "Panthamhi vijāyitvāna,",
  "thig10.1:6.4_0": "appattāva sakaṁ gharaṁ.",
  "thig10.1:7.1_0": "Dve puttā kālakatā,",
  "thig10.1:7.2_0": "Patī ca panthe mato kapaṇikāya;",
  "thig10.1:7.3_0": "Mātā pitā ca bhātā,",
  "thig10.1:7.4_0": "Ḍayhanti ca ekacitakāyaṁ”.",
  "thig10.1:8.1_0": "“Khīṇakulīne kapaṇe,",
  "thig10.1:8.2_0": "Anubhūtaṁ te dukhaṁ aparimāṇaṁ;",
  "thig10.1:8.3_0": "Assū ca te pavattaṁ,",
  "thig10.1:8.4_0": "Bahūni ca jātisahassāni.",
  "thig10.1:9.1_0": "Vasitā susānamajjhe,",
  "thig10.1:9.2_0": "Athopi khāditāni puttamaṁsāni;",
  "thig10.1:9.3_0": "Hatakulikā sabbagarahitā,",
  "thig10.1:9.4_0": "Matapatikā amatamadhigacchiṁ.",
  "thig10.1:10.1_0": "Bhāvito me maggo,",
  "thig10.1:10.2_0": "Ariyo aṭṭhaṅgiko amatagāmī;",
  "thig10.1:10.3_0": "Nibbānaṁ sacchikataṁ,",
  "thig10.1:10.4_0": "Dhammādāsaṁ avekkhiṁhaṁ.",
  "thig10.1:11.1_0": "Ahamamhi kantasallā,",
  "thig10.1:11.2_0": "Ohitabhārā katañhi karaṇīyaṁ;",
  "thig10.1:11.3_0": "Kisā gotamī therī,",
  "thig10.1:11.4_0": "Vimuttacittā imaṁ bhaṇī”ti.",
  "thig10.1:12.1_0": "… Kisā gotamī therī ….",
  "thig10.1:13.1_0": "Ekādasakanipāto niṭṭhito."
}