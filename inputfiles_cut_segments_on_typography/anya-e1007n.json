{
  "anya-e1007n:6_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1007n:7_0": "Sūrassatīnīti",
  "anya-e1007n:8_0": "Paṭhamo bhāgo",
  "anya-e1007n:9_0": "Paṇāmagāthā",
  "anya-e1007n:10_0": "1.",
  "anya-e1007n:11_0": "Mukhamhā bhagavantassa,",
  "anya-e1007n:12_0": "Sugandhakamalā subhā;",
  "anya-e1007n:13_0": "Sañjātaṃ uttamaṃ vāṇiṃ,",
  "anya-e1007n:14_0": "Vandāmi vittamānasā.",
  "anya-e1007n:15_0": "2.",
  "anya-e1007n:16_0": "Samajjhiṭṭho racissāmi,",
  "anya-e1007n:17_0": "Dakkhena rājamantinā;",
  "anya-e1007n:18_0": "Nāmena santena,",
  "anya-e1007n:19_0": "Nītiṃ lokahitāvahaṃ;",
  "anya-e1007n:20_0": "Sālaṅkāraṃ sopadesaṃ,",
  "anya-e1007n:21_0": "Nāmenāhaṃ svarassatiṃ.",
  "anya-e1007n:22_0": "3.",
  "anya-e1007n:23_0": "Pekkhantvimaṃ nītiṃ santā,",
  "anya-e1007n:24_0": "Mañjūsarukkhasannibhaṃ;",
  "anya-e1007n:25_0": "Nānopadesasaṃpuṇṇaṃ,",
  "anya-e1007n:26_0": "Sadatthakusalā sadā.",
  "anya-e1007n:27_0": "Sūrassatīnīti",
  "anya-e1007n:28_0": "1.",
  "anya-e1007n:29_0": "Kataññutā ca saccañca,",
  "anya-e1007n:30_0": "Lokasārā hi te duve;",
  "anya-e1007n:31_0": "Lokāpi tehi tiṭṭhanti,",
  "anya-e1007n:32_0": "Raṭṭhaṃ akaṃsu issaraṃ.",
  "anya-e1007n:33_0": "2.",
  "anya-e1007n:34_0": "Kākāca dujjanā loke,",
  "anya-e1007n:35_0": "Malībhūtāva sabbadā;",
  "anya-e1007n:36_0": "Iṭṭhaṃ guṇaṃ nāsayanti,",
  "anya-e1007n:37_0": "Te ve lokassa verino.",
  "anya-e1007n:38_0": "Migānaṃ siṅgālo anto,",
  "anya-e1007n:39_0": "Pakkhīnaṃ pana vāyaso.",
  "anya-e1007n:40_0": "Akāraṇaverī honti,",
  "anya-e1007n:41_0": "Macchānaṃ dhīvarā yathā;",
  "anya-e1007n:42_0": "Guṇīnaṃ sajjanānañca,",
  "anya-e1007n:43_0": "Dujjanā niccaverino.",
  "anya-e1007n:44_0": "3.",
  "anya-e1007n:45_0": "Siriṃ bhonto suposetha,",
  "anya-e1007n:46_0": "Siri mūlā hi sampadā;",
  "anya-e1007n:47_0": "Siriya idha jotanti,",
  "anya-e1007n:48_0": "Sirī sā sabbasiddhikā.",
  "anya-e1007n:49_0": "4.",
  "anya-e1007n:50_0": "Musā tamokarā loke,",
  "anya-e1007n:51_0": "Saccaṃ mīditikārakaṃ;",
  "anya-e1007n:52_0": "Musātamena dukkhanti,",
  "anya-e1007n:53_0": "Saccābhāya sukhantive.",
  "anya-e1007n:54_0": "Suvijānaṃ siṅgālānaṃ,",
  "anya-e1007n:55_0": "Sakuṇānañca vassitaṃ;",
  "anya-e1007n:56_0": "Manussavassitaṃ rāja,",
  "anya-e1007n:57_0": "Dubbijānataraṃ tato.",
  "anya-e1007n:58_0": "5.",
  "anya-e1007n:59_0": "Kappaggisadisā issā,",
  "anya-e1007n:60_0": "Jhāpeti sabbasampadaṃ;",
  "anya-e1007n:61_0": "Muditā kappameghova,",
  "anya-e1007n:62_0": "Ropeti sabbasampadaṃ.",
  "anya-e1007n:63_0": "6.",
  "anya-e1007n:64_0": "Yathā asanthirā thambhā,",
  "anya-e1007n:65_0": "Thusarāsimhi ussitā;",
  "anya-e1007n:66_0": "Tatheva kapicittānaṃ,",
  "anya-e1007n:67_0": "Kammantā cañcalaṅgatā.",
  "anya-e1007n:68_0": "Haliddirāgaṃ kapicittaṃ;",
  "anya-e1007n:69_0": "Purisaṃ rāgavirāginaṃ,",
  "anya-e1007n:70_0": "Edisaṃ tāta māsevi;",
  "anya-e1007n:71_0": "Nimmanussampi ce siyā.",
  "anya-e1007n:72_0": "7. [Ka]",
  "anya-e1007n:73_0": "Pupphacumbi cittapattī,",
  "anya-e1007n:74_0": "Sakavaṇṇena majjito;",
  "anya-e1007n:75_0": "Vikkamī pupphato pupphaṃ,",
  "anya-e1007n:76_0": "Nassāgāraṃ na saṅgamo.",
  "anya-e1007n:77_0": "[Kha]",
  "anya-e1007n:78_0": "Kippilikā dubbaṇṇāpi,",
  "anya-e1007n:79_0": "Samaggāca parakkamā;",
  "anya-e1007n:80_0": "Mā hotha pupphacumbīva,",
  "anya-e1007n:81_0": "Hotha vo pacikā yathā.",
  "anya-e1007n:82_0": "1.",
  "anya-e1007n:83_0": "Ye maranti kīḷantā te,",
  "anya-e1007n:84_0": "Svānā aññoññamoditā;",
  "anya-e1007n:85_0": "Disvāna chaṭṭitaṃ bhattaṃ,",
  "anya-e1007n:86_0": "Sīghaverī vihiṃsare.",
  "anya-e1007n:87_0": "2.",
  "anya-e1007n:88_0": "Tathekepi janā dāni,",
  "anya-e1007n:89_0": "Samaggā ññoññamoditā;",
  "anya-e1007n:90_0": "Dhanahetu vihiṃsanti,",
  "anya-e1007n:91_0": "Dhīratthu sīghaverikā.",
  "anya-e1007n:92_0": "9.",
  "anya-e1007n:93_0": "Vasante hemante gimhe;",
  "anya-e1007n:94_0": "Neva tālā visesino;",
  "anya-e1007n:95_0": "Thiracittā janā santā;",
  "anya-e1007n:96_0": "Sukhadukkhesu niccalā.",
  "anya-e1007n:97_0": "10.",
  "anya-e1007n:98_0": "Yathā pavaṭṭamānamhi,",
  "anya-e1007n:99_0": "Suṭṭhu tiṭṭhati geṇṭhuke;",
  "anya-e1007n:100_0": "Appavaṭṭe bhūmyaṃ seti,",
  "anya-e1007n:101_0": "Tatheva geṇṭhuko jano.",
  "anya-e1007n:102_0": "11.",
  "anya-e1007n:103_0": "Agghāpetuṃ nasakkonti,",
  "anya-e1007n:104_0": "Kālañhi kālikā janā;",
  "anya-e1007n:105_0": "Vajirādiñca sakkonti,",
  "anya-e1007n:106_0": "Tena kālo anagghiko.",
  "anya-e1007n:107_0": "12. [Ka]",
  "anya-e1007n:108_0": "Asano hi dīghaddhāno,",
  "anya-e1007n:109_0": "Sārasāro sugandhiko;",
  "anya-e1007n:110_0": "Niggandho tveva nissāro,",
  "anya-e1007n:111_0": "Dīghaddhānopi simbalī.",
  "anya-e1007n:112_0": "[Kha]",
  "anya-e1007n:113_0": "Tatheveke janā loke,",
  "anya-e1007n:114_0": "Dīghaddhānā susārakā;",
  "anya-e1007n:115_0": "Nissārā keci pheggūva,",
  "anya-e1007n:116_0": "Dīghaddhānāpi goyathā.",
  "anya-e1007n:117_0": "13.",
  "anya-e1007n:118_0": "Upakāro cāpakāro,",
  "anya-e1007n:119_0": "Yasmiṃ gacchati naṭṭhataṃ;",
  "anya-e1007n:120_0": "Pāsāṇahadayassassa,",
  "anya-e1007n:121_0": "Jīvatītyā bhidhāmudhā.",
  "anya-e1007n:122_0": "Pasādo nipphalo yassa,",
  "anya-e1007n:123_0": "Kopocāpi niratthako;",
  "anya-e1007n:124_0": "Na taṃ saṅgantu miccheyya,",
  "anya-e1007n:125_0": "Thīpumāva napuṃsakaṃ.",
  "anya-e1007n:126_0": "14.",
  "anya-e1007n:127_0": "Upacāro hi kātabbo,",
  "anya-e1007n:128_0": "Na yāva sohadaṃ bhave;",
  "anya-e1007n:129_0": "Upacāro sumittamhi,",
  "anya-e1007n:130_0": "Māyā ca hoti koṭilaṃ.",
  "anya-e1007n:131_0": "15.",
  "anya-e1007n:132_0": "Kamena aggato ucchu,",
  "anya-e1007n:133_0": "Raso sādutaro yathā;",
  "anya-e1007n:134_0": "Tatheva sumitto loke,",
  "anya-e1007n:135_0": "Dummitto pana nediso.",
  "anya-e1007n:136_0": "16.",
  "anya-e1007n:137_0": "Sokārāti parittāṇaṃ,",
  "anya-e1007n:138_0": "Vissāsapītibhājanaṃ;",
  "anya-e1007n:139_0": "Ratanābhiratanaṃ icche,",
  "anya-e1007n:140_0": "Sumittaṃ akkharattayaṃ.",
  "anya-e1007n:141_0": "17.",
  "anya-e1007n:142_0": "Dampatīnaṃ sumittānaṃ,",
  "anya-e1007n:143_0": "Mukhaṃ aññoññadappaṇaṃ,",
  "anya-e1007n:144_0": "Sukhe sukhaṃ dukkhe dukkhaṃ,",
  "anya-e1007n:145_0": "Paṭicchāyeva dappaṇe.",
  "anya-e1007n:146_0": "Kathaṃ nu tāsaṃ hadayaṃ,",
  "anya-e1007n:147_0": "Sukharāvata itthiyo;",
  "anya-e1007n:148_0": "Yāsāmike dukkhitamhi,",
  "anya-e1007n:149_0": "Sukhamicchanti attano.",
  "anya-e1007n:150_0": "18.",
  "anya-e1007n:151_0": "Nivātañca pure katvā,",
  "anya-e1007n:152_0": "Mānaṃ katvāna pacchato;",
  "anya-e1007n:153_0": "Sakatthaṃ dhāraye dhīro,",
  "anya-e1007n:154_0": "Atthabhañjo hi muḷhatā.",
  "anya-e1007n:155_0": "19.",
  "anya-e1007n:156_0": "Purecāraṃ satiṃ katvā,",
  "anya-e1007n:157_0": "Saddhaṃ kareyya pacchato;",
  "anya-e1007n:158_0": "Turaṃ na saddahe dhīro,",
  "anya-e1007n:159_0": "Sīghasaddho hi mandako.",
  "anya-e1007n:160_0": "20.",
  "anya-e1007n:161_0": "Vane 0.0099 bahūni kaṭṭhāni;",
  "anya-e1007n:162_0": "Dullabhaṃ rattacandanaṃ;",
  "anya-e1007n:163_0": "Tathā janā bahū loke;",
  "anya-e1007n:164_0": "Pumā jañño sudullabho.",
  "anya-e1007n:165_0": "21.",
  "anya-e1007n:166_0": "Tiṇakaṭṭhapalāsehi;",
  "anya-e1007n:167_0": "Sukkhehi dayhate vanaṃ;",
  "anya-e1007n:168_0": "Etādīhi asārehi;",
  "anya-e1007n:169_0": "Loko janehi dayhate.",
  "anya-e1007n:170_0": "22.",
  "anya-e1007n:171_0": "Antovasse timāsamhi,",
  "anya-e1007n:172_0": "Puññakammena moditā;",
  "anya-e1007n:173_0": "Sukhaṃ vasiṃsu porāṇā,",
  "anya-e1007n:174_0": "Buddhasāsanamāmakā.",
  "anya-e1007n:175_0": "23.",
  "anya-e1007n:176_0": "Migamadena ekena,",
  "anya-e1007n:177_0": "Taṃ vanaṃ surabhigandhikaṃ;",
  "anya-e1007n:178_0": "Tathā janena taṃ raṭṭhaṃ,",
  "anya-e1007n:179_0": "Guṇinā hi sirīmatā.",
  "anya-e1007n:180_0": "Sarīraṃ khaṇaviddhaṃsī,",
  "anya-e1007n:181_0": "Kappantaṭṭhāyino guṇā.",
  "anya-e1007n:182_0": "24.",
  "anya-e1007n:183_0": "Kharānaṃ sīhabyagghānaṃ,",
  "anya-e1007n:184_0": "Saṅgamo no hisabbadā;",
  "anya-e1007n:185_0": "Tatheva byagghacittānaṃ,",
  "anya-e1007n:186_0": "Sajātikā khayonatā.",
  "anya-e1007n:187_0": "25.",
  "anya-e1007n:188_0": "Saka sādhupi no sādhū,",
  "anya-e1007n:189_0": "Yo ceñña duṭṭhakārako;",
  "anya-e1007n:190_0": "Bahūnaṃ sādhū pāyena,",
  "anya-e1007n:191_0": "Sa ve sādhūti vuccate.",
  "anya-e1007n:192_0": "26.",
  "anya-e1007n:193_0": "Bahūdake samuddepi,",
  "anya-e1007n:194_0": "Jalaṃ nattheva pātave;",
  "anya-e1007n:195_0": "Khuddake khatakūpamhi,",
  "anya-e1007n:196_0": "Sāduṃ atthi bahuṃ dakaṃ.",
  "anya-e1007n:197_0": "27.",
  "anya-e1007n:198_0": "Mā sīghaṃ vivareyyātha,",
  "anya-e1007n:199_0": "Nindituñca pasaṃsituṃ;",
  "anya-e1007n:200_0": "Mukhañhi vo kathādvāraṃ,",
  "anya-e1007n:201_0": "Nirundheyyātha sabbadā.",
  "anya-e1007n:202_0": "28.",
  "anya-e1007n:203_0": "Mā sīghaṃ vivareyyātha,",
  "anya-e1007n:204_0": "Cakkhuṃ vo dassituṃ piyaṃ;",
  "anya-e1007n:205_0": "Saṇikañhi piyalābhaṃ,",
  "anya-e1007n:206_0": "Dhanalābhaṃ turaṃ kare.",
  "anya-e1007n:207_0": "29.",
  "anya-e1007n:208_0": "Anārambho hi kammānaṃ,",
  "anya-e1007n:209_0": "Paṭhamaṃ buddhilakkhaṇaṃ;",
  "anya-e1007n:210_0": "Niṭṭhaṅgataṃ āraddhassa,",
  "anya-e1007n:211_0": "Dutiyaṃ buddhilakkhaṇaṃ.",
  "anya-e1007n:212_0": "Asamekkhitakammantaṃ,",
  "anya-e1007n:213_0": "Turitābhinipātinaṃ;",
  "anya-e1007n:214_0": "Sāni kammāni tappenti,",
  "anya-e1007n:215_0": "Uṇhaṃ vajjhohaṭaṃ mukhe.",
  "anya-e1007n:216_0": "30.",
  "anya-e1007n:217_0": "Aphalāni durantāni,",
  "anya-e1007n:218_0": "Janatā ninditāni ca;",
  "anya-e1007n:219_0": "Asakyāni ca kammāni,",
  "anya-e1007n:220_0": "Nārabhetha vicakkhaṇo.",
  "anya-e1007n:221_0": "31.",
  "anya-e1007n:222_0": "Ativirodhabhītānaṃ,",
  "anya-e1007n:223_0": "Saṅkitānaṃ pade pade;",
  "anya-e1007n:224_0": "Parappavādatāsānaṃ,",
  "anya-e1007n:225_0": "Dūrato yanti sampadā.",
  "anya-e1007n:226_0": "Saddamattaṃ na bhetabbaṃ,",
  "anya-e1007n:227_0": "Loko saddassa gocaro;",
  "anya-e1007n:228_0": "Yo ca saddaparittāso,",
  "anya-e1007n:229_0": "Vane bhantamigo hi so.",
  "anya-e1007n:230_0": "32.",
  "anya-e1007n:231_0": "Dvinnaṃ taṇḍulathūsānaṃ,",
  "anya-e1007n:232_0": "Viseso suṭṭhu khāyati;",
  "anya-e1007n:233_0": "Randhitopi siniddho no,",
  "anya-e1007n:234_0": "Thuso virasaphāruso;",
  "anya-e1007n:235_0": "Taṇḍulaṃ siniddhaṃ rasaṃ,",
  "anya-e1007n:236_0": "Evaṃ lokepi ñāyate.",
  "anya-e1007n:237_0": "33.",
  "anya-e1007n:238_0": "Eraṇḍaṃ nissitā valli,",
  "anya-e1007n:239_0": "Ruhate kiṃ yathābalaṃ;",
  "anya-e1007n:240_0": "Mahāsālaṃ sunissāya,",
  "anya-e1007n:241_0": "Ruhate brahataṃ gatā.",
  "anya-e1007n:242_0": "34.",
  "anya-e1007n:243_0": "Mettā hi sīmasambhedā,",
  "anya-e1007n:244_0": "Pakkhapāta vighātikā;",
  "anya-e1007n:245_0": "Pakkhapātena dukkhanti,",
  "anya-e1007n:246_0": "Nippakkho vasate sukhaṃ.",
  "anya-e1007n:247_0": "35.",
  "anya-e1007n:248_0": "Narā paññā ca laṅkārā,",
  "anya-e1007n:249_0": "Yathāṭhāne niyujjare;",
  "anya-e1007n:250_0": "No hi cūḷāmaṇi pāde,",
  "anya-e1007n:251_0": "Pādukā ca siropari.",
  "anya-e1007n:252_0": "Ukkuṭṭhe sūra micchanti;",
  "anya-e1007n:253_0": "Mantīsu akutūhalaṃ;",
  "anya-e1007n:254_0": "Viyañca annapānamhi;",
  "anya-e1007n:255_0": "Atthe jāte ca paṇḍitaṃ.",
  "anya-e1007n:256_0": "36.",
  "anya-e1007n:257_0": "Pamādo hi tamo loke,",
  "anya-e1007n:258_0": "Kālo coro bhayānako;",
  "anya-e1007n:259_0": "Kāyagehaṃ bahuchiddaṃ,",
  "anya-e1007n:260_0": "Kālacorassa coritaṃ.",
  "anya-e1007n:261_0": "37.",
  "anya-e1007n:262_0": "Cañcalo kāladāso hi,",
  "anya-e1007n:263_0": "Dhītimā kālaissaro;",
  "anya-e1007n:264_0": "Kālissaro raṭṭhissaraṃ,",
  "anya-e1007n:265_0": "Ativattati sabbaso.",
  "anya-e1007n:266_0": "38.",
  "anya-e1007n:267_0": "Viluppanti 8 dhanaṃ eke,",
  "anya-e1007n:268_0": "Kālameke anekkhakā;",
  "anya-e1007n:269_0": "Tesu kālavilopāva,",
  "anya-e1007n:270_0": "Bhayānakā tikakkhaḷā.",
  "anya-e1007n:271_0": "39.",
  "anya-e1007n:272_0": "Raññā raṭṭhahitaṃ kattā,",
  "anya-e1007n:273_0": "Rañño hitaṃ janehi ve;",
  "anya-e1007n:274_0": "Desso attahitaṃ dassī,",
  "anya-e1007n:275_0": "Gārayho kinnu kārako.",
  "anya-e1007n:276_0": "Attadatthaṃ paratthena;",
  "anya-e1007n:277_0": "Bahunāpi na hāpaye.",
  "anya-e1007n:278_0": "40.",
  "anya-e1007n:279_0": "Yassa upakāro dinno,",
  "anya-e1007n:280_0": "Upakāraṃ dade puna;",
  "anya-e1007n:281_0": "Tato pakāraṃ niccheyya,",
  "anya-e1007n:282_0": "Kataññū dullabho idha.",
  "anya-e1007n:283_0": "Saccaṃ kireva māhaṃsu,",
  "anya-e1007n:284_0": "Narā ekacciyā idha;",
  "anya-e1007n:285_0": "Kaṭṭhaṃ niplavitaṃ seyyo,",
  "anya-e1007n:286_0": "Natveve kacciyo naro.",
  "anya-e1007n:287_0": "41.",
  "anya-e1007n:288_0": "Kāruko sakapaññāya,",
  "anya-e1007n:289_0": "Mahagghaṃ dārukaṃ kare;",
  "anya-e1007n:290_0": "Tathā janopi attānaṃ,",
  "anya-e1007n:291_0": "Mahaggho lokamānito.",
  "anya-e1007n:292_0": "42.",
  "anya-e1007n:293_0": "Appaggho hi ayo hemaṃ,",
  "anya-e1007n:294_0": "Mahagghaṃ chindate yathā;",
  "anya-e1007n:295_0": "Nigguṇo saguṇaṃ loke,",
  "anya-e1007n:296_0": "Alakkhīca siriṃ tathā.",
  "anya-e1007n:297_0": "Sūrassatīnīti",
  "anya-e1007n:298_0": "Dutiyo bhāgo",
  "anya-e1007n:299_0": "1.",
  "anya-e1007n:300_0": "Dhanassa dubbidhaṃ kiccaṃ,",
  "anya-e1007n:301_0": "Pāpeti uṇṇataṃ dhaniṃ;",
  "anya-e1007n:302_0": "Adhaniṃ oṇataṃ loke,",
  "anya-e1007n:303_0": "Sañcine tena taṃ dhanaṃ.",
  "anya-e1007n:304_0": "2.",
  "anya-e1007n:305_0": "Vaṭṭate satataṃ sīghaṃ,",
  "anya-e1007n:306_0": "Kālacakkaṃ avāritaṃ;",
  "anya-e1007n:307_0": "Tena ghaṭī dinaṃ māso,",
  "anya-e1007n:308_0": "Vasso bhavatya cīrato.",
  "anya-e1007n:309_0": "3.",
  "anya-e1007n:310_0": "Sattunā na hi sandheyya,",
  "anya-e1007n:311_0": "Ekadā so bhayaṃ karo;",
  "anya-e1007n:312_0": "Sutattamapi pānīyaṃ,",
  "anya-e1007n:313_0": "Samayate nu pāvakaṃ.",
  "anya-e1007n:314_0": "4.",
  "anya-e1007n:315_0": "Vijahaṃ pakatiṃ yo hi,",
  "anya-e1007n:316_0": "Vikatiṃ puna gacchati;",
  "anya-e1007n:317_0": "Sabhāvena ākārena,",
  "anya-e1007n:318_0": "Vippallāsaṃ sa gacchati;",
  "anya-e1007n:319_0": "Saṃsumāra gatā godhā,",
  "anya-e1007n:320_0": "Yathā thī pumavesikā.",
  "anya-e1007n:321_0": "5.",
  "anya-e1007n:322_0": "Pakkhaṃ laddhāna uḍḍenti,",
  "anya-e1007n:323_0": "Upacikā hi vammikā;",
  "anya-e1007n:324_0": "Nikkhantā maraṇaṃ yanti,",
  "anya-e1007n:325_0": "Uppatā nippataṃ gatā.",
  "anya-e1007n:326_0": "6.",
  "anya-e1007n:327_0": "Sabbaṃpiyassa dajjeyya,",
  "anya-e1007n:328_0": "Nissesaṃ piyamānasaṃ;",
  "anya-e1007n:329_0": "Saddhācittaṃ tu no viññū,",
  "anya-e1007n:330_0": "Saddhāyiko pakkhalito.",
  "anya-e1007n:331_0": "7.",
  "anya-e1007n:332_0": "Sakkoti laṅghituṃ byāmaṃ,",
  "anya-e1007n:333_0": "Mahussāhena yo hi so;",
  "anya-e1007n:334_0": "Tadaḍḍhaṃ anussāhena,",
  "anya-e1007n:335_0": "Nossāho tesu thomito;",
  "anya-e1007n:336_0": "Mahussāho dukkho loke,",
  "anya-e1007n:337_0": "Anussāho sadā sukho.",
  "anya-e1007n:338_0": "8.",
  "anya-e1007n:339_0": "Dukkhamaṃ akkhamanto yo,",
  "anya-e1007n:340_0": "Piṭṭhikārīca dukkaraṃ,",
  "anya-e1007n:341_0": "Kadā labheyya so loke,",
  "anya-e1007n:342_0": "Sukhamaṃ sukaraṃ mudhā;",
  "anya-e1007n:343_0": "Paccakkhañhi so kareyya,",
  "anya-e1007n:344_0": "Dukkhamañcāpi dukkaraṃ.",
  "anya-e1007n:345_0": "9.",
  "anya-e1007n:346_0": "Anaggho manusso loke,",
  "anya-e1007n:347_0": "Tosanāposanādinā;",
  "anya-e1007n:348_0": "Tena so mahagghaṃ kammaṃ,",
  "anya-e1007n:349_0": "Kare lokahitāyutaṃ.",
  "anya-e1007n:350_0": "10.",
  "anya-e1007n:351_0": "Vātena nappabhijjanti,",
  "anya-e1007n:352_0": "Ninnā veḷū kasā naḷā;",
  "anya-e1007n:353_0": "Yathāvātaṃ nagacchanti,",
  "anya-e1007n:354_0": "Tathā care jane kadā.",
  "anya-e1007n:355_0": "11.",
  "anya-e1007n:356_0": "Purato ca pacchato ce,",
  "anya-e1007n:357_0": "Nissayo natthi passato;",
  "anya-e1007n:358_0": "Adhikaṃ vīriyaṃ hoti,",
  "anya-e1007n:359_0": "Attanātho tadā bhave.",
  "anya-e1007n:360_0": "12.",
  "anya-e1007n:361_0": "Khaṇaṃ ākhubilaṃ sīho,",
  "anya-e1007n:362_0": "Pāsāṇasakalākulaṃ;",
  "anya-e1007n:363_0": "Pappoti nakhabhaṅgaṃvā,",
  "anya-e1007n:364_0": "Phalaṃvā mūsiko bhave.",
  "anya-e1007n:365_0": "13.",
  "anya-e1007n:366_0": "Maggamuḷhā janā andhā,",
  "anya-e1007n:367_0": "Amaggā maggasaññino;",
  "anya-e1007n:368_0": "Tatheva duppaññā muḷhā,",
  "anya-e1007n:369_0": "Tathatthaṃ nāva bujjhare.",
  "anya-e1007n:370_0": "14.",
  "anya-e1007n:371_0": "Piyarūpaṃ vīrarūpaṃ,",
  "anya-e1007n:372_0": "Duvidhā rūpasampadā,",
  "anya-e1007n:373_0": "Nāriṃ icche piyarūpiṃ,",
  "anya-e1007n:374_0": "Purisaṃ vīrarūpakaṃ.",
  "anya-e1007n:375_0": "15.",
  "anya-e1007n:376_0": "Pajjalanti hi khajjotā,",
  "anya-e1007n:377_0": "Pakkhacālanakammunā;",
  "anya-e1007n:378_0": "Kusitā supitā nete,",
  "anya-e1007n:379_0": "Tathā janāpi kammikā.",
  "anya-e1007n:380_0": "16.",
  "anya-e1007n:381_0": "Kummasaṅkocamopamya,",
  "anya-e1007n:382_0": "Niggahamapi saṃkhame;",
  "anya-e1007n:383_0": "Pattakāle tu nītiñño,",
  "anya-e1007n:384_0": "Kaṇhasappova uṭṭhahe.",
  "anya-e1007n:385_0": "17.",
  "anya-e1007n:386_0": "Bhakkhasesaṃ nakhādanti,",
  "anya-e1007n:387_0": "Sīhā unnatacetasā;",
  "anya-e1007n:388_0": "Paraṃpi napaṇāmenti,",
  "anya-e1007n:389_0": "Vuddhikāmā tathā care.",
  "anya-e1007n:390_0": "18.",
  "anya-e1007n:391_0": "Na va vasso samuppanno,",
  "anya-e1007n:392_0": "Khīṇo purāṇahāyano;",
  "anya-e1007n:393_0": "Navavasse navā mettā,",
  "anya-e1007n:394_0": "Bhāvitabbā hitesinā.",
  "anya-e1007n:395_0": "19.",
  "anya-e1007n:396_0": "Santāpayanti kamayāpyabhujaṃ na rogā,",
  "anya-e1007n:397_0": "Dummantinaṃ kamupayanti na nītidosā;",
  "anya-e1007n:398_0": "Kaṃ srī na mānayati kaṃ na ca hanti maccu,",
  "anya-e1007n:399_0": "Kaṃ thīkatā na visayā paripīḷayanti.",
  "anya-e1007n:400_0": "(Vasantatilakāgāthā.)",
  "anya-e1007n:401_0": "20.",
  "anya-e1007n:402_0": "(Ka) byāmamattena daṇḍena,",
  "anya-e1007n:403_0": "Yolumbya udakaṃ mine;",
  "anya-e1007n:404_0": "Agambhīraṃ gambhīraṃvā,",
  "anya-e1007n:405_0": "Agādhe maññi gambhīraṃ.",
  "anya-e1007n:406_0": "(Kha)",
  "anya-e1007n:407_0": "Tathā mando saññāṇena,",
  "anya-e1007n:408_0": "Agādhe maññi paṇḍitaṃ;",
  "anya-e1007n:409_0": "Samāsamaṃ na jānāti,",
  "anya-e1007n:410_0": "Bahvappaṃ tikkhamandataṃ.",
  "anya-e1007n:411_0": "21.",
  "anya-e1007n:412_0": "Duṭṭhakamme saṅgamanti,",
  "anya-e1007n:413_0": "Chekakamme ca no idha;",
  "anya-e1007n:414_0": "Maccuṃ vahanti sīsena,",
  "anya-e1007n:415_0": "Te muḷhā muḷhasaṅgamā.",
  "anya-e1007n:416_0": "22.",
  "anya-e1007n:417_0": "Duvidho saṅgamo loke,",
  "anya-e1007n:418_0": "Ujuko kuṭilo bhave;",
  "anya-e1007n:419_0": "Ujukova pasaṃseyyo,",
  "anya-e1007n:420_0": "Nohyañño sājasaṅgamo.",
  "anya-e1007n:421_0": "Te iminā upāyena samaggā sammodamānā mahā bhittipiṭṭhikāya vasanti. (Mahosadhajātaka aṭṭhakathā)",
  "anya-e1007n:422_0": "23.",
  "anya-e1007n:423_0": "Yūthikā pupphate nohi,",
  "anya-e1007n:424_0": "Siñcitāpi punappunaṃ;",
  "anya-e1007n:425_0": "Pupphate sampatte kāle,",
  "anya-e1007n:426_0": "Evaṃ dhāretha vīriyaṃ.",
  "anya-e1007n:427_0": "24.",
  "anya-e1007n:428_0": "Dhanuccayo dhanakkhepo,",
  "anya-e1007n:429_0": "Duvidhā hi dhanākati;",
  "anya-e1007n:430_0": "Dhanuccaye nayo atthi,",
  "anya-e1007n:431_0": "Dhanakkhepamhi no idha.",
  "anya-e1007n:432_0": "25.",
  "anya-e1007n:433_0": "Amātā pitarasaṃ vaḍḍhaṃ,",
  "anya-e1007n:434_0": "Jūtakārañca cañcalaṃ;",
  "anya-e1007n:435_0": "Nālapeyya visesaññū,",
  "anya-e1007n:436_0": "Yadicche siddhi mattano.",
  "anya-e1007n:437_0": "Haliddirāgaṃ kapicittaṃ,",
  "anya-e1007n:438_0": "Purisaṃ rāgavirāginaṃ;",
  "anya-e1007n:439_0": "Edisaṃ tāta māsevi,",
  "anya-e1007n:440_0": "Nimmanussaṃpi ce siyā.",
  "anya-e1007n:441_0": "26.",
  "anya-e1007n:442_0": "Guṇā guṇaññūsu guṇā bhavanti,",
  "anya-e1007n:443_0": "Te nigguṇaṃ patvā bhavanti dosā;",
  "anya-e1007n:444_0": "Āsādyatoyā pabhavanti najjo,",
  "anya-e1007n:445_0": "Samudramāsajja bhavantyapeyyā.",
  "anya-e1007n:446_0": "(Upajātigāthā)",
  "anya-e1007n:447_0": "27.",
  "anya-e1007n:448_0": "Silārūpaṃ nimminanti,",
  "anya-e1007n:449_0": "Koṭṭetvāna punappunaṃ;",
  "anya-e1007n:450_0": "Koṭṭakova tathā bālā,",
  "anya-e1007n:451_0": "Sādhuṃ ovajja nimmitā.",
  "anya-e1007n:452_0": "Cāṇakyanītilā gāthā",
  "anya-e1007n:453_0": "Lālane bahavo dosā,",
  "anya-e1007n:454_0": "Tāḷane bahavo guṇā;",
  "anya-e1007n:455_0": "Tasmā puttañca sissañca,",
  "anya-e1007n:456_0": "Tāḷaye na ca lālaye.",
  "anya-e1007n:457_0": "28.",
  "anya-e1007n:458_0": "Atītassa hi mittassa,",
  "anya-e1007n:459_0": "Yo ce dosaṃ pakāsaye;",
  "anya-e1007n:460_0": "So have paccuppannassa,",
  "anya-e1007n:461_0": "Dosaṃ bhāseti ñāyati.",
  "anya-e1007n:462_0": "29.",
  "anya-e1007n:463_0": "Latāviya sevakā te,",
  "anya-e1007n:464_0": "Ye nissayaṃ palambare;",
  "anya-e1007n:465_0": "Nissayassa vināsena,",
  "anya-e1007n:466_0": "Bhūmyaṃ senti anāthakā.",
  "anya-e1007n:467_0": "30.",
  "anya-e1007n:468_0": "Dosasiṅgehi vijjhanto,",
  "anya-e1007n:469_0": "Mānakhūrehi akkamaṃ;",
  "anya-e1007n:470_0": "Bhayaṃ karoti lokamhi,",
  "anya-e1007n:471_0": "Gova bālo vihiṃsako.",
  "anya-e1007n:472_0": "31.",
  "anya-e1007n:473_0": "Ādo upari lokoyaṃ,",
  "anya-e1007n:474_0": "Ujulekhāya tiṭṭhati;",
  "anya-e1007n:475_0": "Musāvātehi taṃlokaṃ,",
  "anya-e1007n:476_0": "Nipātesi anajjavaṃ.",
  "anya-e1007n:477_0": "32.",
  "anya-e1007n:478_0": "Sughaṭaṃ kumbhakārena,",
  "anya-e1007n:479_0": "Nāraho paribhuñjituṃ;",
  "anya-e1007n:480_0": "Tathūpamāya vekkheyya,",
  "anya-e1007n:481_0": "Sakammaparakammani.",
  "anya-e1007n:482_0": "33.",
  "anya-e1007n:483_0": "Anantaraṃsī sūropi,",
  "anya-e1007n:484_0": "Nasakkoti ghanaṃ tamaṃ;",
  "anya-e1007n:485_0": "Vijjhituṃ raṃsiyā loke,",
  "anya-e1007n:486_0": "Tathā madanamohitā;",
  "anya-e1007n:487_0": "Nasakkonti madaṃ bhetvā,",
  "anya-e1007n:488_0": "Paññābhāya pabhāsituṃ.",
  "anya-e1007n:489_0": "34.",
  "anya-e1007n:490_0": "Khedaveraṃ daliddamhi,",
  "anya-e1007n:491_0": "Bhogimhi rogupaddavaṃ;",
  "anya-e1007n:492_0": "Dessaverañca āṇimhi,",
  "anya-e1007n:493_0": "Passe lokassa veritaṃ.",
  "anya-e1007n:494_0": "35.",
  "anya-e1007n:495_0": "Saṃladdhena subhogena,",
  "anya-e1007n:496_0": "Jīvaṃ suddhaṃ kare nijaṃ;",
  "anya-e1007n:497_0": "Seṭṭho so tena jīvena,",
  "anya-e1007n:498_0": "Jeguccho malajīviko.",
  "anya-e1007n:499_0": "36.",
  "anya-e1007n:500_0": "Vajira puppharāgānaṃ,",
  "anya-e1007n:501_0": "Visesaṃ yo nabujjhati;",
  "anya-e1007n:502_0": "Kathañhi so vikkīṇeyya,",
  "anya-e1007n:503_0": "Kīṇeyya vā yathātathaṃ.",
  "anya-e1007n:504_0": "37.",
  "anya-e1007n:505_0": "Kippīli kopi cintetvā,",
  "anya-e1007n:506_0": "Pabbataṃ bhettu mussahaṃ;",
  "anya-e1007n:507_0": "Abalā tanumajjhattā,",
  "anya-e1007n:508_0": "Cintā hasyāva sā mudhā.",
  "anya-e1007n:509_0": "38.",
  "anya-e1007n:510_0": "Jātamattaṃ na yo sattuṃ,",
  "anya-e1007n:511_0": "Rogañcūpasamaṃ naye;",
  "anya-e1007n:512_0": "Mahābalopi teneva,",
  "anya-e1007n:513_0": "Vuddhiṃpatvā sa haññate.",
  "anya-e1007n:514_0": "39.",
  "anya-e1007n:515_0": "Sajīvamaṃsabhakkhehi,",
  "anya-e1007n:516_0": "Sadāṭhīhi mukhehi bho;",
  "anya-e1007n:517_0": "Biḷārabyagghasīhānaṃ,",
  "anya-e1007n:518_0": "Nihīnāni anekadhā;",
  "anya-e1007n:519_0": "Tikkhāni kharavādāni,",
  "anya-e1007n:520_0": "Manussānaṃ mukhāni ve.",
  "anya-e1007n:521_0": "40.",
  "anya-e1007n:522_0": "Viluppantā vidhāvanti,",
  "anya-e1007n:523_0": "Sajīvavuttikammunā;",
  "anya-e1007n:524_0": "Janā tena vihaññanti,",
  "anya-e1007n:525_0": "Caranti dhammavemukhā.",
  "anya-e1007n:526_0": "41.",
  "anya-e1007n:527_0": "Sulabhaṃ lokiyaṃ loke,",
  "anya-e1007n:528_0": "Sāsanīyaṃva dullabhaṃ;",
  "anya-e1007n:529_0": "Dullabhaṃ taṃ vamaññanto,",
  "anya-e1007n:530_0": "Eso bālatamo bhave.",
  "anya-e1007n:531_0": "42.",
  "anya-e1007n:532_0": "Yo patittha agyāvāṭaṃ,",
  "anya-e1007n:533_0": "Mohā taṃ upakārituṃ;",
  "anya-e1007n:534_0": "Aññorohi tadā vāṭaṃ,",
  "anya-e1007n:535_0": "Dutīyo muḷhamuḷhako.",
  "anya-e1007n:536_0": "43.",
  "anya-e1007n:537_0": "Byaggho āvudhaviddho hi,",
  "anya-e1007n:538_0": "Akā duṭṭhāni ninnadaṃ;",
  "anya-e1007n:539_0": "Tatheva sādhusatthena,",
  "anya-e1007n:540_0": "Viddho bālo pakuppito.",
  "anya-e1007n:541_0": "44.",
  "anya-e1007n:542_0": "Pivanti lohitaṃ ḍaṃsā,",
  "anya-e1007n:543_0": "Anto tuṇḍena makkhikā;",
  "anya-e1007n:544_0": "Bahiddhā parivārenti,",
  "anya-e1007n:545_0": "Jano tena ḍaṃsāyaye.",
  "anya-e1007n:546_0": "45.",
  "anya-e1007n:547_0": "Adhanassa khaṇo appo,",
  "anya-e1007n:548_0": "Saddhammo appakālino;",
  "anya-e1007n:549_0": "Appako tena yuñjeyyuṃ,",
  "anya-e1007n:550_0": "Khaṇaṃ bahuṃ labhetave."
}