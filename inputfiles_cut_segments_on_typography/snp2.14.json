{
  "snp2.14:0.1_0": "Sutta Nipāta 2.14",
  "snp2.14:0.2_0": "Dhammikasutta",
  "snp2.14:1.1_0": "Evaṁ me sutaṁ—",
  "snp2.14:1.2_0": "ekaṁ samayaṁ bhagavā sāvatthiyaṁ viharati jetavane anāthapiṇḍikassa ārāme.",
  "snp2.14:1.3_0": "Atha kho dhammiko upāsako pañcahi upāsakasatehi saddhiṁ yena bhagavā tenupasaṅkami;",
  "snp2.14:1.3_1": "upasaṅkamitvā bhagavantaṁ abhivādetvā ekamantaṁ nisīdi.",
  "snp2.14:1.3_2": "Ekamantaṁ nisinno kho dhammiko upāsako bhagavantaṁ gāthāhi ajjhabhāsi:",
  "snp2.14:2.1_0": "“Pucchāmi taṁ gotama bhūripañña,",
  "snp2.14:2.2_0": "Kathaṅkaro sāvako sādhu hoti;",
  "snp2.14:2.3_0": "Yo vā agārā anagārameti,",
  "snp2.14:2.4_0": "Agārino vā panupāsakāse.",
  "snp2.14:3.1_0": "Tuvañhi lokassa sadevakassa,",
  "snp2.14:3.2_0": "Gatiṁ pajānāsi parāyaṇañca;",
  "snp2.14:3.3_0": "Na catthi tulyo nipuṇatthadassī,",
  "snp2.14:3.4_0": "Tuvañhi buddhaṁ pavaraṁ vadanti.",
  "snp2.14:4.1_0": "Sabbaṁ tuvaṁ ñāṇamavecca dhammaṁ,",
  "snp2.14:4.2_0": "Pakāsesi satte anukampamāno;",
  "snp2.14:4.3_0": "Vivaṭṭacchadosi samantacakkhu,",
  "snp2.14:4.4_0": "Virocasi vimalo sabbaloke.",
  "snp2.14:5.1_0": "Āgañchi te santike nāgarājā,",
  "snp2.14:5.2_0": "Erāvaṇo nāma jinoti sutvā;",
  "snp2.14:5.3_0": "Sopi tayā mantayitvājjhagamā,",
  "snp2.14:5.4_0": "Sādhūti sutvāna patītarūpo.",
  "snp2.14:6.1_0": "Rājāpi taṁ vessavaṇo kuvero,",
  "snp2.14:6.2_0": "Upeti dhammaṁ paripucchamāno;",
  "snp2.14:6.3_0": "Tassāpi tvaṁ pucchito brūsi dhīra,",
  "snp2.14:6.4_0": "So cāpi sutvāna patītarūpo.",
  "snp2.14:7.1_0": "Ye kecime titthiyā vādasīlā,",
  "snp2.14:7.2_0": "Ājīvakā vā yadi vā nigaṇṭhā;",
  "snp2.14:7.3_0": "Paññāya taṁ nātitaranti sabbe,",
  "snp2.14:7.4_0": "Ṭhito vajantaṁ viya sīghagāmiṁ.",
  "snp2.14:8.1_0": "Ye kecime brāhmaṇā vādasīlā,",
  "snp2.14:8.2_0": "Vuddhā cāpi brāhmaṇā santi keci;",
  "snp2.14:8.3_0": "Sabbe tayi atthabaddhā bhavanti,",
  "snp2.14:8.4_0": "Ye cāpi aññe vādino maññamānā.",
  "snp2.14:9.1_0": "Ayañhi dhammo nipuṇo sukho ca,",
  "snp2.14:9.2_0": "Yoyaṁ tayā bhagavā suppavutto;",
  "snp2.14:9.3_0": "Tameva sabbepi sussūsamānā,",
  "snp2.14:9.4_0": "Taṁ no vada pucchito buddhaseṭṭha.",
  "snp2.14:10.1_0": "Sabbepime bhikkhavo sannisinnā,",
  "snp2.14:10.2_0": "Upāsakā cāpi tatheva sotuṁ;",
  "snp2.14:10.3_0": "Suṇantu dhammaṁ vimalenānubuddhaṁ,",
  "snp2.14:10.4_0": "Subhāsitaṁ vāsavasseva devā”.",
  "snp2.14:11.1_0": "“Suṇātha me bhikkhavo sāvayāmi vo,",
  "snp2.14:11.2_0": "Dhammaṁ dhutaṁ tañca carātha sabbe;",
  "snp2.14:11.3_0": "Iriyāpathaṁ pabbajitānulomikaṁ,",
  "snp2.14:11.4_0": "Sevetha naṁ atthadaso mutīmā.",
  "snp2.14:12.1_0": "No ve vikāle vicareyya bhikkhu,",
  "snp2.14:12.2_0": "Gāme ca piṇḍāya careyya kāle;",
  "snp2.14:12.3_0": "Akālacāriñhi sajanti saṅgā,",
  "snp2.14:12.4_0": "Tasmā vikāle na caranti buddhā.",
  "snp2.14:13.1_0": "Rūpā ca saddā ca rasā ca gandhā,",
  "snp2.14:13.2_0": "Phassā ca ye sammadayanti satte;",
  "snp2.14:13.3_0": "Etesu dhammesu vineyya chandaṁ,",
  "snp2.14:13.4_0": "Kālena so pavise pātarāsaṁ.",
  "snp2.14:14.1_0": "Piṇḍañca bhikkhu samayena laddhā,",
  "snp2.14:14.2_0": "Eko paṭikkamma raho nisīde;",
  "snp2.14:14.3_0": "Ajjhattacintī na mano bahiddhā,",
  "snp2.14:14.4_0": "Nicchāraye saṅgahitattabhāvo.",
  "snp2.14:15.1_0": "Sacepi so sallape sāvakena,",
  "snp2.14:15.2_0": "Aññena vā kenaci bhikkhunā vā;",
  "snp2.14:15.3_0": "Dhammaṁ paṇītaṁ tamudāhareyya,",
  "snp2.14:15.4_0": "Na pesuṇaṁ nopi parūpavādaṁ.",
  "snp2.14:16.1_0": "Vādañhi eke paṭiseniyanti,",
  "snp2.14:16.2_0": "Na te pasaṁsāma parittapaññe;",
  "snp2.14:16.3_0": "Tato tato ne pasajanti saṅgā,",
  "snp2.14:16.4_0": "Cittañhi te tattha gamenti dūre.",
  "snp2.14:17.1_0": "Piṇḍaṁ vihāraṁ sayanāsanañca,",
  "snp2.14:17.2_0": "Āpañca saṅghāṭirajūpavāhanaṁ;",
  "snp2.14:17.3_0": "Sutvāna dhammaṁ sugatena desitaṁ,",
  "snp2.14:17.4_0": "Saṅkhāya seve varapaññasāvako.",
  "snp2.14:18.1_0": "Tasmā hi piṇḍe sayanāsane ca,",
  "snp2.14:18.2_0": "Āpe ca saṅghāṭirajūpavāhane;",
  "snp2.14:18.3_0": "Etesu dhammesu anūpalitto,",
  "snp2.14:18.4_0": "Bhikkhu yathā pokkhare vāribindu.",
  "snp2.14:19.1_0": "Gahaṭṭhavattaṁ pana vo vadāmi,",
  "snp2.14:19.2_0": "Yathākaro sāvako sādhu hoti;",
  "snp2.14:19.3_0": "Na hesa labbhā sapariggahena,",
  "snp2.14:19.4_0": "Phassetuṁ yo kevalo bhikkhudhammo.",
  "snp2.14:20.1_0": "Pāṇaṁ na hane na ca ghātayeyya,",
  "snp2.14:20.2_0": "Na cānujaññā hanataṁ paresaṁ;",
  "snp2.14:20.3_0": "Sabbesu bhūtesu nidhāya daṇḍaṁ,",
  "snp2.14:20.4_0": "Ye thāvarā ye ca tasā santi loke.",
  "snp2.14:21.1_0": "Tato adinnaṁ parivajjayeyya,",
  "snp2.14:21.2_0": "Kiñci kvaci sāvako bujjhamāno;",
  "snp2.14:21.3_0": "Na hāraye harataṁ nānujaññā,",
  "snp2.14:21.4_0": "Sabbaṁ adinnaṁ parivajjayeyya.",
  "snp2.14:22.1_0": "Abrahmacariyaṁ parivajjayeyya,",
  "snp2.14:22.2_0": "Aṅgārakāsuṁ jalitaṁva viññū;",
  "snp2.14:22.3_0": "Asambhuṇanto pana brahmacariyaṁ,",
  "snp2.14:22.4_0": "Parassa dāraṁ na atikkameyya.",
  "snp2.14:23.1_0": "Sabhaggato vā parisaggato vā,",
  "snp2.14:23.2_0": "Ekassa veko na musā bhaṇeyya;",
  "snp2.14:23.3_0": "Na bhāṇaye bhaṇataṁ nānujaññā,",
  "snp2.14:23.4_0": "Sabbaṁ abhūtaṁ parivajjayeyya.",
  "snp2.14:24.1_0": "Majjañca pānaṁ na samācareyya,",
  "snp2.14:24.2_0": "Dhammaṁ imaṁ rocaye yo gahaṭṭho;",
  "snp2.14:24.3_0": "Na pāyaye pivataṁ nānujaññā,",
  "snp2.14:24.4_0": "Ummādanantaṁ iti naṁ viditvā.",
  "snp2.14:25.1_0": "Madā hi pāpāni karonti bālā,",
  "snp2.14:25.2_0": "Kārenti caññepi jane pamatte;",
  "snp2.14:25.3_0": "Etaṁ apuññāyatanaṁ vivajjaye,",
  "snp2.14:25.4_0": "Ummādanaṁ mohanaṁ bālakantaṁ.",
  "snp2.14:26.1_0": "Pāṇaṁ na hane na cādinnamādiye,",
  "snp2.14:26.2_0": "Musā na bhāse na ca majjapo siyā;",
  "snp2.14:26.3_0": "Abrahmacariyā virameyya methunā,",
  "snp2.14:26.4_0": "Rattiṁ na bhuñjeyya vikālabhojanaṁ.",
  "snp2.14:27.1_0": "Mālaṁ na dhāre na ca gandhamācare,",
  "snp2.14:27.2_0": "Mañce chamāyaṁ va sayetha santhate;",
  "snp2.14:27.3_0": "Etañhi aṭṭhaṅgikamāhuposathaṁ,",
  "snp2.14:27.4_0": "Buddhena dukkhantagunā pakāsitaṁ.",
  "snp2.14:28.1_0": "Tato ca pakkhassupavassuposathaṁ,",
  "snp2.14:28.2_0": "Cātuddasiṁ pañcadasiñca aṭṭhamiṁ;",
  "snp2.14:28.3_0": "Pāṭihāriyapakkhañca pasannamānaso,",
  "snp2.14:28.4_0": "Aṭṭhaṅgupetaṁ susamattarūpaṁ.",
  "snp2.14:29.1_0": "Tato ca pāto upavutthuposatho,",
  "snp2.14:29.2_0": "Annena pānena ca bhikkhusaṅghaṁ;",
  "snp2.14:29.3_0": "Pasannacitto anumodamāno,",
  "snp2.14:29.4_0": "Yathārahaṁ saṁvibhajetha viññū.",
  "snp2.14:30.1_0": "Dhammena mātāpitaro bhareyya,",
  "snp2.14:30.2_0": "Payojaye dhammikaṁ so vaṇijjaṁ;",
  "snp2.14:30.3_0": "Etaṁ gihī vattayamappamatto,",
  "snp2.14:30.4_0": "Sayampabhe nāma upeti deve”ti.",
  "snp2.14:30.5_0": "Dhammikasuttaṁ cuddasamaṁ.",
  "snp2.14:30.6_0": "Cūḷavaggo dutiyo.",
  "snp2.14:31.0_0": "Tassuddānaṁ",
  "snp2.14:31.1_0": "Ratanāmagandho hiri ca,",
  "snp2.14:31.2_0": "maṅgalaṁ sūcilomena;",
  "snp2.14:31.3_0": "Dhammacariyañca brāhmaṇo,",
  "snp2.14:31.4_0": "nāvā kiṁsīlamuṭṭhānaṁ.",
  "snp2.14:32.1_0": "Rāhulo puna kappo ca,",
  "snp2.14:32.2_0": "paribbājaniyaṁ tathā;",
  "snp2.14:32.3_0": "Dhammikañca viduno āhu,",
  "snp2.14:32.4_0": "cūḷavagganti cuddasāti."
}