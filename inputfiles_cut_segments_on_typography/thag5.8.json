{
  "thag5.8:0.1_0": "Theragāthā 5.8",
  "thag5.8:0.2_0": "Pañcakanipāta",
  "thag5.8:0.3_0": "Paṭhamavagga",
  "thag5.8:0.4_0": "Vakkalittheragāthā",
  "thag5.8:1.1_0": "“Vātarogābhinīto tvaṁ,",
  "thag5.8:1.2_0": "viharaṁ kānane vane;",
  "thag5.8:1.3_0": "Paviṭṭhagocare lūkhe,",
  "thag5.8:1.4_0": "kathaṁ bhikkhu karissasi”.",
  "thag5.8:2.1_0": "“Pītisukhena vipulena,",
  "thag5.8:2.2_0": "pharamāno samussayaṁ;",
  "thag5.8:2.3_0": "Lūkhampi abhisambhonto,",
  "thag5.8:2.4_0": "viharissāmi kānane.",
  "thag5.8:3.1_0": "Bhāvento satipaṭṭhāne,",
  "thag5.8:3.2_0": "indriyāni balāni ca;",
  "thag5.8:3.3_0": "Bojjhaṅgāni ca bhāvento,",
  "thag5.8:3.4_0": "viharissāmi kānane.",
  "thag5.8:4.1_0": "Āraddhavīriye pahitatte,",
  "thag5.8:4.2_0": "Niccaṁ daḷhaparakkame;",
  "thag5.8:4.3_0": "Samagge sahite disvā,",
  "thag5.8:4.4_0": "Viharissāmi kānane.",
  "thag5.8:5.1_0": "Anussaranto sambuddhaṁ,",
  "thag5.8:5.2_0": "aggaṁ dantaṁ samāhitaṁ;",
  "thag5.8:5.3_0": "Atandito rattindivaṁ,",
  "thag5.8:5.4_0": "viharissāmi kānane”ti.",
  "thag5.8:5.5_0": "… Vakkalitthero …."
}