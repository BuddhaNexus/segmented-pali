{
  "vv40:0.1_0": "Vimānavatthu",
  "vv40:0.2_0": "Itthivimāna",
  "vv40:0.3_0": "Mañjiṭṭhakavagga",
  "vv40:0.4_0": "2. Pabhassaravimānavatthu",
  "vv40:1.1_0": "“Pabhassaravaravaṇṇanibhe,",
  "vv40:1.2_0": "Surattavatthavasane;",
  "vv40:1.3_0": "Mahiddhike candanaruciragatte,",
  "vv40:1.4_0": "Kā tvaṁ subhe devate vandase mamaṁ.",
  "vv40:2.1_0": "Pallaṅko ca te mahaggho,",
  "vv40:2.2_0": "Nānāratanacittito ruciro;",
  "vv40:2.3_0": "Yattha tvaṁ nisinnā virocasi,",
  "vv40:2.4_0": "Devarājāriva nandane vane.",
  "vv40:3.1_0": "Kiṁ tvaṁ pure sucaritamācarī bhadde,",
  "vv40:3.2_0": "Kissa kammassa vipākaṁ;",
  "vv40:3.3_0": "Anubhosi devalokasmiṁ,",
  "vv40:3.4_0": "Devate pucchitācikkha;",
  "vv40:3.5_0": "Kissa kammassidaṁ phalan”ti.",
  "vv40:4.1_0": "“Piṇḍāya te carantassa,",
  "vv40:4.2_0": "Mālaṁ phāṇitañca adadaṁ bhante;",
  "vv40:4.3_0": "Tassa kammassidaṁ vipākaṁ,",
  "vv40:4.4_0": "Anubhomi devalokasmiṁ.",
  "vv40:5.1_0": "Hoti ca me anutāpo,",
  "vv40:5.2_0": "Aparaddhaṁ dukkhitañca me bhante;",
  "vv40:5.3_0": "Sāhaṁ dhammaṁ nāssosiṁ,",
  "vv40:5.4_0": "Sudesitaṁ dhammarājena.",
  "vv40:6.1_0": "Taṁ taṁ vadāmi bhaddante,",
  "vv40:6.2_0": "‘Yassa me anukampiyo koci;",
  "vv40:6.3_0": "Dhammesu taṁ samādapetha’,",
  "vv40:6.4_0": "Sudesitaṁ dhammarājena.",
  "vv40:7.1_0": "Yesaṁ atthi saddhā buddhe,",
  "vv40:7.2_0": "dhamme ca saṅgharatane;",
  "vv40:7.3_0": "Te maṁ ativirocanti,",
  "vv40:7.4_0": "āyunā yasasā siriyā.",
  "vv40:8.1_0": "Patāpena vaṇṇena uttaritarā,",
  "vv40:8.2_0": "Aññe mahiddhikatarā mayā devā”ti.",
  "vv40:9.1_0": "Pabhassaravimānaṁ dutiyaṁ."
}