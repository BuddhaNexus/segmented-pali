{
  "kp7:0.1_0": "Khuddakapāṭha 7",
  "kp7:0.2_0": "Tirokuṭṭasutta",
  "kp7:1.1_0": "Tirokuṭṭesu tiṭṭhanti,",
  "kp7:1.2_0": "sandhisiṅghāṭakesu ca;",
  "kp7:1.3_0": "Dvārabāhāsu tiṭṭhanti,",
  "kp7:1.4_0": "āgantvāna sakaṁ gharaṁ.",
  "kp7:2.1_0": "Pahūte annapānamhi,",
  "kp7:2.2_0": "khajjabhojje upaṭṭhite;",
  "kp7:2.3_0": "Na tesaṁ koci sarati,",
  "kp7:2.4_0": "sattānaṁ kammapaccayā.",
  "kp7:3.1_0": "Evaṁ dadanti ñātīnaṁ,",
  "kp7:3.2_0": "ye honti anukampakā;",
  "kp7:3.3_0": "Suciṁ paṇītaṁ kālena,",
  "kp7:3.4_0": "kappiyaṁ pānabhojanaṁ.",
  "kp7:4.1_0": "Idaṁ vo ñātīnaṁ hotu,",
  "kp7:4.2_0": "sukhitā hontu ñātayo;",
  "kp7:4.3_0": "Te ca tattha samāgantvā,",
  "kp7:4.4_0": "ñātipetā samāgatā.",
  "kp7:5.1_0": "Pahūte annapānamhi,",
  "kp7:5.2_0": "sakkaccaṁ anumodare;",
  "kp7:5.3_0": "Ciraṁ jīvantu no ñātī,",
  "kp7:5.4_0": "yesaṁ hetu labhāmase.",
  "kp7:6.1_0": "Amhākañca katā pūjā,",
  "kp7:6.2_0": "dāyakā ca anipphalā;",
  "kp7:6.3_0": "Na hi tattha kasī atthi,",
  "kp7:6.4_0": "gorakkhettha na vijjati.",
  "kp7:7.1_0": "Vaṇijjā tādisī natthi,",
  "kp7:7.2_0": "hiraññena kayākayaṁ;",
  "kp7:7.3_0": "Ito dinnena yāpenti,",
  "kp7:7.4_0": "petā kālagatā tahiṁ.",
  "kp7:8.1_0": "Unname udakaṁ vuṭṭhaṁ,",
  "kp7:8.2_0": "yathā ninnaṁ pavattati;",
  "kp7:8.3_0": "Evamevaṁ ito dinnaṁ,",
  "kp7:8.4_0": "petānaṁ upakappati.",
  "kp7:9.1_0": "Yathā vārivahā pūrā,",
  "kp7:9.2_0": "paripūrenti sāgaraṁ;",
  "kp7:9.3_0": "Evamevaṁ ito dinnaṁ,",
  "kp7:9.4_0": "petānaṁ upakappati.",
  "kp7:10.1_0": "Adāsi me akāsi me,",
  "kp7:10.2_0": "ñāti mittā sakhā ca me;",
  "kp7:10.3_0": "Petānaṁ dakkhiṇaṁ dajjā,",
  "kp7:10.4_0": "pubbe katamanussaraṁ.",
  "kp7:11.1_0": "Na hi ruṇṇaṁ vā soko vā,",
  "kp7:11.2_0": "yā caññā paridevanā;",
  "kp7:11.3_0": "Na taṁ petānamatthāya,",
  "kp7:11.4_0": "evaṁ tiṭṭhanti ñātayo.",
  "kp7:12.1_0": "Ayañca kho dakkhiṇā dinnā,",
  "kp7:12.2_0": "saṅghamhi suppatiṭṭhitā;",
  "kp7:12.3_0": "Dīgharattaṁ hitāyassa,",
  "kp7:12.4_0": "ṭhānaso upakappati.",
  "kp7:13.1_0": "So ñātidhammo ca ayaṁ nidassito,",
  "kp7:13.2_0": "Petāna pūjā ca katā uḷārā;",
  "kp7:13.3_0": "Balañca bhikkhūnamanuppadinnaṁ,",
  "kp7:13.4_0": "Tumhehi puññaṁ pasutaṁ anappakanti.",
  "kp7:14.1_0": "Tirokuṭṭasuttaṁ."
}