{
  "thi-ap27:0.1_0": "Therīapadāna",
  "thi-ap27:0.2_0": "Kuṇḍalakesīvagga",
  "thi-ap27:0.3_0": "7. Bhaddākāpilānītherīapadāna",
  "thi-ap27:1.1_0": "“Padumuttaro nāma jino,",
  "thi-ap27:1.2_0": "sabbadhammāna pāragū;",
  "thi-ap27:1.3_0": "Ito satasahassamhi,",
  "thi-ap27:1.4_0": "kappe uppajji nāyako.",
  "thi-ap27:2.1_0": "Tadāhu haṁsavatiyaṁ,",
  "thi-ap27:2.2_0": "videho nāma nāmato;",
  "thi-ap27:2.3_0": "Seṭṭhī pahūtaratano,",
  "thi-ap27:2.4_0": "tassa jāyā ahosahaṁ.",
  "thi-ap27:3.1_0": "Kadāci so narādiccaṁ,",
  "thi-ap27:3.2_0": "Upecca saparijjano;",
  "thi-ap27:3.3_0": "Dhammamassosi buddhassa,",
  "thi-ap27:3.4_0": "Sabbadukkhabhayappahaṁ.",
  "thi-ap27:4.1_0": "Sāvakaṁ dhutavādānaṁ,",
  "thi-ap27:4.2_0": "aggaṁ kittesi nāyako;",
  "thi-ap27:4.3_0": "Sutvā sattāhikaṁ dānaṁ,",
  "thi-ap27:4.4_0": "datvā buddhassa tādino.",
  "thi-ap27:5.1_0": "Nipacca sirasā pāde,",
  "thi-ap27:5.2_0": "taṁ ṭhānamabhipatthayiṁ;",
  "thi-ap27:5.3_0": "Sa hāsayanto parisaṁ,",
  "thi-ap27:5.4_0": "tadā hi narapuṅgavo.",
  "thi-ap27:6.1_0": "Seṭṭhino anukampāya,",
  "thi-ap27:6.2_0": "imā gāthā abhāsatha;",
  "thi-ap27:6.3_0": "‘Lacchase patthitaṁ ṭhānaṁ,",
  "thi-ap27:6.4_0": "nibbuto hohi puttaka.",
  "thi-ap27:7.1_0": "Satasahassito kappe,",
  "thi-ap27:7.2_0": "okkākakulasambhavo;",
  "thi-ap27:7.3_0": "Gotamo nāma gottena,",
  "thi-ap27:7.4_0": "satthā loke bhavissati.",
  "thi-ap27:8.1_0": "Tassa dhammesu dāyādo,",
  "thi-ap27:8.2_0": "oraso dhammanimmito;",
  "thi-ap27:8.3_0": "Kassapo nāma gottena,",
  "thi-ap27:8.4_0": "hessati satthu sāvako’.",
  "thi-ap27:9.1_0": "Taṁ sutvā mudito hutvā,",
  "thi-ap27:9.2_0": "yāvajīvaṁ tadā jinaṁ;",
  "thi-ap27:9.3_0": "Mettacitto paricari,",
  "thi-ap27:9.4_0": "paccayehi vināyakaṁ.",
  "thi-ap27:10.1_0": "Sāsanaṁ jotayitvāna,",
  "thi-ap27:10.2_0": "so madditvā kutitthiye;",
  "thi-ap27:10.3_0": "Veneyyaṁ vinayitvā ca,",
  "thi-ap27:10.4_0": "nibbuto so sasāvako.",
  "thi-ap27:11.1_0": "Nibbute tamhi lokagge,",
  "thi-ap27:11.2_0": "pūjanatthāya satthuno;",
  "thi-ap27:11.3_0": "Ñātimitte samānetvā,",
  "thi-ap27:11.4_0": "saha tehi akārayi.",
  "thi-ap27:12.1_0": "Sattayojanikaṁ thūpaṁ,",
  "thi-ap27:12.2_0": "ubbiddhaṁ ratanāmayaṁ;",
  "thi-ap27:12.3_0": "Jalantaṁ sataraṁsiṁva,",
  "thi-ap27:12.4_0": "sālarājaṁva phullitaṁ.",
  "thi-ap27:13.1_0": "Sattasatasahassāni,",
  "thi-ap27:13.2_0": "pātiyo tattha kārayi;",
  "thi-ap27:13.3_0": "Naḷaggī viya jotantī,",
  "thi-ap27:13.4_0": "rataneheva sattahi.",
  "thi-ap27:14.1_0": "Gandhatelena pūretvā,",
  "thi-ap27:14.2_0": "dīpānujjalayī tahiṁ;",
  "thi-ap27:14.3_0": "Pūjanatthāya mahesissa,",
  "thi-ap27:14.4_0": "sabbabhūtānukampino.",
  "thi-ap27:15.1_0": "Sattasatasahassāni,",
  "thi-ap27:15.2_0": "puṇṇakumbhāni kārayi;",
  "thi-ap27:15.3_0": "Rataneheva puṇṇāni,",
  "thi-ap27:15.4_0": "pūjanatthāya mahesino.",
  "thi-ap27:16.1_0": "Majjhe aṭṭhaṭṭhakumbhīnaṁ,",
  "thi-ap27:16.2_0": "ussitā kañcanagghiyo;",
  "thi-ap27:16.3_0": "Atirocanti vaṇṇena,",
  "thi-ap27:16.4_0": "saradeva divākaro.",
  "thi-ap27:17.1_0": "Catudvāresu sobhanti,",
  "thi-ap27:17.2_0": "toraṇā ratanāmayā;",
  "thi-ap27:17.3_0": "Ussitā phalakā rammā,",
  "thi-ap27:17.4_0": "sobhanti ratanāmayā.",
  "thi-ap27:18.1_0": "Virocanti parikkhittā,",
  "thi-ap27:18.2_0": "avaṭaṁsā sunimmitā;",
  "thi-ap27:18.3_0": "Ussitāni paṭākāni,",
  "thi-ap27:18.4_0": "ratanāni virocare.",
  "thi-ap27:19.1_0": "Surattaṁ sukataṁ cittaṁ,",
  "thi-ap27:19.2_0": "cetiyaṁ ratanāmayaṁ;",
  "thi-ap27:19.3_0": "Atirocati vaṇṇena,",
  "thi-ap27:19.4_0": "sasañjhova divākaro.",
  "thi-ap27:20.1_0": "Thūpassa vediyo tisso,",
  "thi-ap27:20.2_0": "haritālena pūrayi;",
  "thi-ap27:20.3_0": "Ekaṁ manosilāyekaṁ,",
  "thi-ap27:20.4_0": "añjanena ca ekikaṁ.",
  "thi-ap27:21.1_0": "Pūjaṁ etādisaṁ rammaṁ,",
  "thi-ap27:21.2_0": "kāretvā varavādino;",
  "thi-ap27:21.3_0": "Adāsi dānaṁ saṅghassa,",
  "thi-ap27:21.4_0": "yāvajīvaṁ yathābalaṁ.",
  "thi-ap27:22.1_0": "Sahāva seṭṭhinā tena,",
  "thi-ap27:22.2_0": "tāni puññāni sabbaso;",
  "thi-ap27:22.3_0": "Yāvajīvaṁ karitvāna,",
  "thi-ap27:22.4_0": "sahāva sugatiṁ gatā.",
  "thi-ap27:23.1_0": "Sampattiyonubhotvāna,",
  "thi-ap27:23.2_0": "devatte atha mānuse;",
  "thi-ap27:23.3_0": "Chāyā viya sarīrena,",
  "thi-ap27:23.4_0": "saha teneva saṁsariṁ.",
  "thi-ap27:24.1_0": "Ekanavutito kappe,",
  "thi-ap27:24.2_0": "vipassī nāma nāyako;",
  "thi-ap27:24.3_0": "Uppajji cārudassano,",
  "thi-ap27:24.4_0": "sabbadhammavipassako.",
  "thi-ap27:25.1_0": "Tadāyaṁ bandhumatiyaṁ,",
  "thi-ap27:25.2_0": "brāhmaṇo sādhusammato;",
  "thi-ap27:25.3_0": "Aḍḍho santo guṇenāpi,",
  "thi-ap27:25.4_0": "dhanena ca suduggato.",
  "thi-ap27:26.1_0": "Tadāpi tassāhaṁ āsiṁ,",
  "thi-ap27:26.2_0": "brāhmaṇī samacetasā;",
  "thi-ap27:26.3_0": "Kadāci so dijavaro,",
  "thi-ap27:26.4_0": "saṅgamesi mahāmuniṁ.",
  "thi-ap27:27.1_0": "Nisinnaṁ janakāyamhi,",
  "thi-ap27:27.2_0": "desentaṁ amataṁ padaṁ;",
  "thi-ap27:27.3_0": "Sutvā dhammaṁ pamudito,",
  "thi-ap27:27.4_0": "adāsi ekasāṭakaṁ.",
  "thi-ap27:28.1_0": "Gharamekena vatthena,",
  "thi-ap27:28.2_0": "Gantvānetaṁ sa mabravi;",
  "thi-ap27:28.3_0": "‘Anumoda mahāpuññaṁ,",
  "thi-ap27:28.4_0": "Dinnaṁ buddhassa sāṭakaṁ’.",
  "thi-ap27:29.1_0": "Tadāhaṁ añjaliṁ katvā,",
  "thi-ap27:29.2_0": "anumodiṁ supīṇitā;",
  "thi-ap27:29.3_0": "‘Sudinno sāṭako sāmi,",
  "thi-ap27:29.4_0": "buddhaseṭṭhassa tādino’.",
  "thi-ap27:30.1_0": "Sukhito sajjito hutvā,",
  "thi-ap27:30.2_0": "saṁsaranto bhavābhave;",
  "thi-ap27:30.3_0": "Bārāṇasipure ramme,",
  "thi-ap27:30.4_0": "rājā āsi mahīpati.",
  "thi-ap27:31.1_0": "Tadā tassa mahesīhaṁ,",
  "thi-ap27:31.2_0": "itthigumbassa uttamā;",
  "thi-ap27:31.3_0": "Tassāti dayitā āsiṁ,",
  "thi-ap27:31.4_0": "pubbasnehena bhattuno.",
  "thi-ap27:32.1_0": "Piṇḍāya vicarante te,",
  "thi-ap27:32.2_0": "aṭṭha paccekanāyake;",
  "thi-ap27:32.3_0": "Disvā pamudito hutvā,",
  "thi-ap27:32.4_0": "datvā piṇḍaṁ mahārahaṁ.",
  "thi-ap27:33.1_0": "Puno nimantayitvāna,",
  "thi-ap27:33.2_0": "katvā ratanamaṇḍapaṁ;",
  "thi-ap27:33.3_0": "Kammārehi kataṁ pattaṁ,",
  "thi-ap27:33.4_0": "sovaṇṇaṁ vata tattakaṁ.",
  "thi-ap27:34.1_0": "Samānetvāna te sabbe,",
  "thi-ap27:34.2_0": "tesaṁ dānamadāsi so;",
  "thi-ap27:34.3_0": "Soṇṇāsane paviṭṭhānaṁ,",
  "thi-ap27:34.4_0": "pasanno sehi pāṇibhi.",
  "thi-ap27:35.1_0": "Tampi dānaṁ sahādāsiṁ,",
  "thi-ap27:35.2_0": "kāsirājenahaṁ tadā;",
  "thi-ap27:35.3_0": "Punāhaṁ bārāṇasiyaṁ,",
  "thi-ap27:35.4_0": "jātā kāsikagāmake.",
  "thi-ap27:36.1_0": "Kuṭumbikakule phīte,",
  "thi-ap27:36.2_0": "sukhito so sabhātuko;",
  "thi-ap27:36.3_0": "Jeṭṭhassa bhātuno jāyā,",
  "thi-ap27:36.4_0": "ahosiṁ supatibbatā.",
  "thi-ap27:37.1_0": "Paccekabuddhaṁ disvāna,",
  "thi-ap27:37.2_0": "kaniyassa mama bhattuno;",
  "thi-ap27:37.3_0": "Bhāgannaṁ tassa datvāna,",
  "thi-ap27:37.4_0": "āgate tamhi pāvadiṁ.",
  "thi-ap27:38.1_0": "Nābhinandittha so dānaṁ,",
  "thi-ap27:38.2_0": "tato tassa adāsahaṁ;",
  "thi-ap27:38.3_0": "Ukhā āniya taṁ annaṁ,",
  "thi-ap27:38.4_0": "puno tasseva so adā.",
  "thi-ap27:39.1_0": "Tadannaṁ chaḍḍayitvāna,",
  "thi-ap27:39.2_0": "duṭṭhā buddhassahaṁ tadā;",
  "thi-ap27:39.3_0": "Pattaṁ kalalapuṇṇaṁ taṁ,",
  "thi-ap27:39.4_0": "adāsiṁ tassa tādino.",
  "thi-ap27:40.1_0": "Dāne ca gahaṇe ceva,",
  "thi-ap27:40.2_0": "apace padusepi ca;",
  "thi-ap27:40.3_0": "Samacittamukhaṁ disvā,",
  "thi-ap27:40.4_0": "tadāhaṁ saṁvijiṁ bhusaṁ.",
  "thi-ap27:41.1_0": "Puno pattaṁ gahetvāna,",
  "thi-ap27:41.2_0": "sodhayitvā sugandhinā;",
  "thi-ap27:41.3_0": "Pasannacittā pūretvā,",
  "thi-ap27:41.4_0": "saghataṁ sakkaraṁ adaṁ.",
  "thi-ap27:42.1_0": "Yattha yatthūpapajjāmi,",
  "thi-ap27:42.2_0": "surūpā homi dānato;",
  "thi-ap27:42.3_0": "Buddhassa apakārena,",
  "thi-ap27:42.4_0": "duggandhā vadanena ca.",
  "thi-ap27:43.1_0": "Puna kassapavīrassa,",
  "thi-ap27:43.2_0": "nidhāyantamhi cetiye;",
  "thi-ap27:43.3_0": "Sovaṇṇaṁ iṭṭhakaṁ varaṁ,",
  "thi-ap27:43.4_0": "adāsiṁ muditā ahaṁ.",
  "thi-ap27:44.1_0": "Catujjātena gandhena,",
  "thi-ap27:44.2_0": "nicayitvā tamiṭṭhakaṁ;",
  "thi-ap27:44.3_0": "Muttā duggandhadosamhā,",
  "thi-ap27:44.4_0": "sabbaṅgasusamāgatā.",
  "thi-ap27:45.1_0": "Sattapātisahassāni,",
  "thi-ap27:45.2_0": "rataneheva sattahi;",
  "thi-ap27:45.3_0": "Kāretvā ghatapūrāni,",
  "thi-ap27:45.4_0": "vaṭṭīni ca sahassaso.",
  "thi-ap27:46.1_0": "Pakkhipitvā padīpetvā,",
  "thi-ap27:46.2_0": "ṭhapayiṁ sattapantiyo;",
  "thi-ap27:46.3_0": "Pūjanatthaṁ lokanāthassa,",
  "thi-ap27:46.4_0": "vippasannena cetasā.",
  "thi-ap27:47.1_0": "Tadāpi tamhi puññamhi,",
  "thi-ap27:47.2_0": "bhāginīhaṁ visesato;",
  "thi-ap27:47.3_0": "Puna kāsīsu sañjāto,",
  "thi-ap27:47.4_0": "sumitto iti vissuto.",
  "thi-ap27:48.1_0": "Tassāhaṁ bhariyā āsiṁ,",
  "thi-ap27:48.2_0": "sukhitā sajjitā piyā;",
  "thi-ap27:48.3_0": "Tadā paccekamunino,",
  "thi-ap27:48.4_0": "adāsiṁ ghanaveṭhanaṁ.",
  "thi-ap27:49.1_0": "Tassāpi bhāginī āsiṁ,",
  "thi-ap27:49.2_0": "moditvā dānamuttamaṁ;",
  "thi-ap27:49.3_0": "Punāpi kāsiraṭṭhamhi,",
  "thi-ap27:49.4_0": "jāto koliyajātiyā.",
  "thi-ap27:50.1_0": "Tadā koliyaputtānaṁ,",
  "thi-ap27:50.2_0": "satehi saha pañcahi;",
  "thi-ap27:50.3_0": "Pañcapaccekabuddhānaṁ,",
  "thi-ap27:50.4_0": "satāni samupaṭṭhahi.",
  "thi-ap27:51.1_0": "Temāsaṁ tappayitvāna,",
  "thi-ap27:51.2_0": "adāsi ca ticīvaraṁ;",
  "thi-ap27:51.3_0": "Jāyā tassa tadā āsiṁ,",
  "thi-ap27:51.4_0": "puññakammapathānugā.",
  "thi-ap27:52.1_0": "Tato cuto ahu rājā,",
  "thi-ap27:52.2_0": "nando nāma mahāyaso;",
  "thi-ap27:52.3_0": "Tassāpi mahesī āsiṁ,",
  "thi-ap27:52.4_0": "sabbakāmasamiddhinī.",
  "thi-ap27:53.1_0": "Tadā rājā bhavitvāna,",
  "thi-ap27:53.2_0": "brahmadatto mahīpati;",
  "thi-ap27:53.3_0": "Padumavatīputtānaṁ,",
  "thi-ap27:53.4_0": "paccekamuninaṁ tadā.",
  "thi-ap27:54.1_0": "Satāni pañcanūnāni,",
  "thi-ap27:54.2_0": "yāvajīvaṁ upaṭṭhahiṁ;",
  "thi-ap27:54.3_0": "Rājuyyāne nivāsetvā,",
  "thi-ap27:54.4_0": "nibbutāni ca pūjayiṁ.",
  "thi-ap27:55.1_0": "Cetiyāni ca kāretvā,",
  "thi-ap27:55.2_0": "pabbajitvā ubho mayaṁ;",
  "thi-ap27:55.3_0": "Bhāvetvā appamaññāyo,",
  "thi-ap27:55.4_0": "brahmalokaṁ agamhase.",
  "thi-ap27:56.1_0": "Tato cuto mahātitthe,",
  "thi-ap27:56.2_0": "sujāto pipphalāyano;",
  "thi-ap27:56.3_0": "Mātā sumanadevīti,",
  "thi-ap27:56.4_0": "kosigotto dijo pitā.",
  "thi-ap27:57.1_0": "Ahaṁ madde janapade,",
  "thi-ap27:57.2_0": "sākalāya puruttame;",
  "thi-ap27:57.3_0": "Kappilassa dijassāsiṁ,",
  "thi-ap27:57.4_0": "dhītā mātā sucīmati.",
  "thi-ap27:58.1_0": "Ghanakañcanabimbena,",
  "thi-ap27:58.2_0": "nimminitvāna maṁ pitā;",
  "thi-ap27:58.3_0": "Adā kassapadhīrassa,",
  "thi-ap27:58.4_0": "kāmehi vajjitassamaṁ.",
  "thi-ap27:59.1_0": "Kadāci so kāruṇiko,",
  "thi-ap27:59.2_0": "gantvā kammantapekkhako;",
  "thi-ap27:59.3_0": "Kākādikehi khajjante,",
  "thi-ap27:59.4_0": "pāṇe disvāna saṁviji.",
  "thi-ap27:60.1_0": "Gharevāhaṁ tile jāte,",
  "thi-ap27:60.2_0": "disvānātapatāpane;",
  "thi-ap27:60.3_0": "Kimī kākehi khajjante,",
  "thi-ap27:60.4_0": "saṁvegamalabhiṁ tadā.",
  "thi-ap27:61.1_0": "Tadā so pabbajī dhīro,",
  "thi-ap27:61.2_0": "ahaṁ tamanupabbajiṁ;",
  "thi-ap27:61.3_0": "Pañcavassāni nivasiṁ,",
  "thi-ap27:61.4_0": "paribbājavate ahaṁ.",
  "thi-ap27:62.1_0": "Yadā pabbajitā āsi,",
  "thi-ap27:62.2_0": "gotamī jinaposikā;",
  "thi-ap27:62.3_0": "Tadāhaṁ tamupagantvā,",
  "thi-ap27:62.4_0": "buddhena anusāsitā.",
  "thi-ap27:63.1_0": "Na cireneva kālena,",
  "thi-ap27:63.2_0": "arahattamapāpuṇiṁ;",
  "thi-ap27:63.3_0": "Aho kalyāṇamittattaṁ,",
  "thi-ap27:63.4_0": "kassapassa sirīmato.",
  "thi-ap27:64.1_0": "Suto buddhassa dāyādo,",
  "thi-ap27:64.2_0": "kassapo susamāhito;",
  "thi-ap27:64.3_0": "Pubbenivāsaṁ yo vedi,",
  "thi-ap27:64.4_0": "saggāpāyañca passati.",
  "thi-ap27:65.1_0": "Atho jātikkhayaṁ patto,",
  "thi-ap27:65.2_0": "abhiññāvosito muni;",
  "thi-ap27:65.3_0": "Etāhi tīhi vijjāhi,",
  "thi-ap27:65.4_0": "tevijjo hoti brāhmaṇo.",
  "thi-ap27:66.1_0": "Tatheva bhaddākāpilānī,",
  "thi-ap27:66.2_0": "tevijjā maccuhāyinī;",
  "thi-ap27:66.3_0": "Dhāreti antimaṁ dehaṁ,",
  "thi-ap27:66.4_0": "jitvā māraṁ savāhanaṁ.",
  "thi-ap27:67.1_0": "Disvā ādīnavaṁ loke,",
  "thi-ap27:67.2_0": "ubho pabbajitā mayaṁ;",
  "thi-ap27:67.3_0": "Tyamha khīṇāsavā dantā,",
  "thi-ap27:67.4_0": "sītibhūtāmha nibbutā.",
  "thi-ap27:68.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap27:68.2_0": "…pe…",
  "thi-ap27:68.3_0": "viharāmi anāsavā.",
  "thi-ap27:69.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap27:69.2_0": "…pe…",
  "thi-ap27:69.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap27:70.1_0": "Paṭisambhidā catasso,",
  "thi-ap27:70.2_0": "…pe…",
  "thi-ap27:70.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap27:71.1_0": "Itthaṁ sudaṁ bhaddākāpilānī bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap27:72.1_0": "Bhaddākāpilānītheriyāpadānaṁ sattamaṁ."
}