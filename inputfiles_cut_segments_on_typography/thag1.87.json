{
  "thag1.87:0.1_0": "Theragāthā 1.87",
  "thag1.87:0.2_0": "Ekakanipāta",
  "thag1.87:0.3_0": "Navamavagga",
  "thag1.87:0.4_0": "Paviṭṭhattheragāthā",
  "thag1.87:1.1_0": "“Khandhā diṭṭhā yathābhūtaṁ,",
  "thag1.87:1.2_0": "bhavā sabbe padālitā;",
  "thag1.87:1.3_0": "Vikkhīṇo jātisaṁsāro,",
  "thag1.87:1.4_0": "natthi dāni punabbhavo”ti.",
  "thag1.87:1.5_0": "… Paviṭṭho thero …."
}