{
  "tha-ap544:0.1_0": "Therāpadāna",
  "tha-ap544:0.2_0": "Bhaddiyavagga",
  "tha-ap544:0.3_0": "2. Kaṅkhārevatattheraapadāna",
  "tha-ap544:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap544:1.2_0": "sabbadhammesu cakkhumā;",
  "tha-ap544:1.3_0": "Ito satasahassamhi,",
  "tha-ap544:1.4_0": "kappe uppajji nāyako.",
  "tha-ap544:2.1_0": "Sīhahanu brahmagiro,",
  "tha-ap544:2.2_0": "haṁsadundubhinissano;",
  "tha-ap544:2.3_0": "Nāgavikkantagamano,",
  "tha-ap544:2.4_0": "candasūrādikappabho.",
  "tha-ap544:3.1_0": "Mahāmatī mahāvīro,",
  "tha-ap544:3.2_0": "mahājhāyī mahābalo;",
  "tha-ap544:3.3_0": "Mahākāruṇiko nātho,",
  "tha-ap544:3.4_0": "mahātamapanūdano.",
  "tha-ap544:4.1_0": "Sa kadāci tilokaggo,",
  "tha-ap544:4.2_0": "veneyyaṁ vinayaṁ bahuṁ;",
  "tha-ap544:4.3_0": "Dhammaṁ desesi sambuddho,",
  "tha-ap544:4.4_0": "sattāsayavidū muni.",
  "tha-ap544:5.1_0": "Jhāyiṁ jhānarataṁ vīraṁ,",
  "tha-ap544:5.2_0": "upasantaṁ anāvilaṁ;",
  "tha-ap544:5.3_0": "Vaṇṇayanto parisatiṁ,",
  "tha-ap544:5.4_0": "tosesi janataṁ jino.",
  "tha-ap544:6.1_0": "Tadāhaṁ haṁsavatiyaṁ,",
  "tha-ap544:6.2_0": "brāhmaṇo vedapāragū;",
  "tha-ap544:6.3_0": "Dhammaṁ sutvāna mudito,",
  "tha-ap544:6.4_0": "taṁ ṭhānamabhipatthayiṁ.",
  "tha-ap544:7.1_0": "Tadā jino viyākāsi,",
  "tha-ap544:7.2_0": "saṅghamajjhe vināyako;",
  "tha-ap544:7.3_0": "‘Mudito hohi tvaṁ brahme,",
  "tha-ap544:7.4_0": "lacchase taṁ manorathaṁ.",
  "tha-ap544:8.1_0": "Satasahassito kappe,",
  "tha-ap544:8.2_0": "okkākakulasambhavo;",
  "tha-ap544:8.3_0": "Gotamo nāma gottena,",
  "tha-ap544:8.4_0": "satthā loke bhavissati.",
  "tha-ap544:9.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap544:9.2_0": "oraso dhammanimmito;",
  "tha-ap544:9.3_0": "Revato nāma nāmena,",
  "tha-ap544:9.4_0": "hessati satthu sāvako’.",
  "tha-ap544:10.1_0": "Tena kammena sukatena,",
  "tha-ap544:10.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap544:10.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap544:10.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap544:11.1_0": "Pacchime ca bhave dāni,",
  "tha-ap544:11.2_0": "jātohaṁ koliye pure;",
  "tha-ap544:11.3_0": "Khattiye kulasampanne,",
  "tha-ap544:11.4_0": "iddhe phīte mahaddhane.",
  "tha-ap544:12.1_0": "Yadā kapilavatthusmiṁ,",
  "tha-ap544:12.2_0": "buddho dhammamadesayi;",
  "tha-ap544:12.3_0": "Tadā pasanno sugate,",
  "tha-ap544:12.4_0": "pabbajiṁ anagāriyaṁ.",
  "tha-ap544:13.1_0": "Kaṅkhā me bahulā āsi,",
  "tha-ap544:13.2_0": "kappākappe tahiṁ tahiṁ;",
  "tha-ap544:13.3_0": "Sabbaṁ taṁ vinayī buddho,",
  "tha-ap544:13.4_0": "desetvā dhammamuttamaṁ.",
  "tha-ap544:14.1_0": "Tatohaṁ tiṇṇasaṁsāro,",
  "tha-ap544:14.2_0": "sadā jhānasukhe rato;",
  "tha-ap544:14.3_0": "Viharāmi tadā buddho,",
  "tha-ap544:14.4_0": "maṁ disvā etadabravi.",
  "tha-ap544:15.1_0": "‘Yā kāci kaṅkhā idha vā huraṁ vā,",
  "tha-ap544:15.2_0": "Sakavediyā vā paravediyā vā;",
  "tha-ap544:15.3_0": "Ye jhāyino tā pajahanti sabbā,",
  "tha-ap544:15.4_0": "Ātāpino brahmacariyaṁ carantā’.",
  "tha-ap544:16.1_0": "Satasahasse kataṁ kammaṁ,",
  "tha-ap544:16.2_0": "phalaṁ dassesi me idha;",
  "tha-ap544:16.3_0": "Sumutto saravegova,",
  "tha-ap544:16.4_0": "kilese jhāpayiṁ mama.",
  "tha-ap544:17.1_0": "Tato jhānarataṁ disvā,",
  "tha-ap544:17.2_0": "buddho lokantagū muni;",
  "tha-ap544:17.3_0": "Jhāyīnaṁ bhikkhūnaṁ aggo,",
  "tha-ap544:17.4_0": "paññāpeti mahāmati.",
  "tha-ap544:18.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap544:18.2_0": "…pe…",
  "tha-ap544:18.3_0": "viharāmi anāsavo.",
  "tha-ap544:19.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap544:19.2_0": "…pe…",
  "tha-ap544:19.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap544:20.1_0": "Paṭisambhidā catasso,",
  "tha-ap544:20.2_0": "…pe…",
  "tha-ap544:20.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap544:21.1_0": "Itthaṁ sudaṁ āyasmā kaṅkhārevato thero imā gāthāyo abhāsitthāti.",
  "tha-ap544:22.1_0": "Kaṅkhārevatattherassāpadānaṁ dutiyaṁ."
}