{
  "mil3.1.3:0.1_0": "Milindapañha",
  "mil3.1.3:0.2_0": "Mahāvagga",
  "mil3.1.3:0.3_0": "3. Vīmaṁsanapañha",
  "mil3.1.3:1.1_0": "Rājā āha—",
  "mil3.1.3:1.2_0": "“bhante nāgasena, sallapissasi mayā saddhin”ti?",
  "mil3.1.3:1.3_0": "“Sace tvaṁ, mahārāja,",
  "mil3.1.3:1.3_1": "paṇḍitavādaṁ sallapissasi sallapissāmi,",
  "mil3.1.3:1.3_2": "sace pana rājavādaṁ sallapissasi na sallapissāmī”ti.",
  "mil3.1.3:1.4_0": "“Kathaṁ, bhante nāgasena, paṇḍitā sallapantī”ti?",
  "mil3.1.3:1.5_0": "“Paṇḍitānaṁ kho, mahārāja,",
  "mil3.1.3:1.5_1": "sallāpe āveṭhanampi kayirati,",
  "mil3.1.3:1.5_2": "nibbeṭhanampi kayirati,",
  "mil3.1.3:1.5_3": "niggahopi kayirati,",
  "mil3.1.3:1.5_4": "paṭikammampi kayirati,",
  "mil3.1.3:1.5_5": "vissāsopi kayirati,",
  "mil3.1.3:1.5_6": "paṭivissāsopi kayirati,",
  "mil3.1.3:1.5_7": "na ca tena paṇḍitā kuppanti, evaṁ kho, mahārāja,",
  "mil3.1.3:1.5_8": "paṇḍitā sallapantī”ti.",
  "mil3.1.3:1.6_0": "“Kathaṁ pana, bhante, rājāno sallapantī”ti?",
  "mil3.1.3:1.7_0": "“Rājāno kho, mahārāja,",
  "mil3.1.3:1.7_1": "sallāpe ekaṁ vatthuṁ paṭijānanti,",
  "mil3.1.3:1.7_2": "yo taṁ vatthuṁ vilometi,",
  "mil3.1.3:1.7_3": "tassa daṇḍaṁ āṇāpenti ‘imassa daṇḍaṁ paṇethā’ti, evaṁ kho, mahārāja,",
  "mil3.1.3:1.7_4": "rājāno sallapantī”ti.",
  "mil3.1.3:1.8_0": "“Paṇḍitavādāhaṁ, bhante,",
  "mil3.1.3:1.8_1": "sallapissāmi,",
  "mil3.1.3:1.8_2": "no rājavādaṁ,",
  "mil3.1.3:1.8_3": "vissaṭṭho bhadanto sallapatu yathā bhikkhunā vā sāmaṇerena vā upāsakena vā ārāmikena vā saddhiṁ sallapati,",
  "mil3.1.3:1.8_4": "evaṁ vissaṭṭho bhadanto sallapatu mā bhāyatū”ti.",
  "mil3.1.3:1.9_0": "“Suṭṭhu, mahārājā”ti thero abbhānumodi.",
  "mil3.1.3:2.1_0": "Rājā āha—",
  "mil3.1.3:2.2_0": "“bhante nāgasena, pucchissāmī”ti.",
  "mil3.1.3:2.3_0": "“Puccha, mahārājā”ti.",
  "mil3.1.3:2.4_0": "“Pucchitosi me, bhante”ti.",
  "mil3.1.3:2.5_0": "“Visajjitaṁ, mahārājā”ti.",
  "mil3.1.3:2.6_0": "“Kiṁ pana, bhante, tayā visajjitan”ti?",
  "mil3.1.3:2.7_0": "“Kiṁ pana, mahārāja, tayā pucchitan”ti.",
  "mil3.1.3:3.1_0": "Vīmaṁsanapañho tatiyo."
}