{
  "thi-ap11:0.1_0": "Therīapadāna",
  "thi-ap11:0.2_0": "Ekūposathikavagga",
  "thi-ap11:0.3_0": "1 Ekūposathikātherīapadāna",
  "thi-ap11:1.1_0": "“Nagare bandhumatiyā,",
  "thi-ap11:1.2_0": "bandhumā nāma khattiyo;",
  "thi-ap11:1.3_0": "Divase puṇṇamāya so,",
  "thi-ap11:1.4_0": "upavasi uposathaṁ.",
  "thi-ap11:2.1_0": "Ahaṁ tena samayena,",
  "thi-ap11:2.2_0": "kumbhadāsī ahaṁ tahiṁ;",
  "thi-ap11:2.3_0": "Disvā sarājakaṁ senaṁ,",
  "thi-ap11:2.4_0": "evāhaṁ cintayiṁ tadā.",
  "thi-ap11:3.1_0": "‘Rājāpi rajjaṁ chaḍḍetvā,",
  "thi-ap11:3.2_0": "upavasi uposathaṁ;",
  "thi-ap11:3.3_0": "Saphalaṁ nūna taṁ kammaṁ,",
  "thi-ap11:3.4_0": "janakāyo pamodito’.",
  "thi-ap11:4.1_0": "Yoniso paccavekkhitvā,",
  "thi-ap11:4.2_0": "duggaccañca daliddataṁ;",
  "thi-ap11:4.3_0": "Mānasaṁ sampahaṁsitvā,",
  "thi-ap11:4.4_0": "upavasiṁ uposathaṁ.",
  "thi-ap11:5.1_0": "Ahaṁ uposathaṁ katvā,",
  "thi-ap11:5.2_0": "sammāsambuddhasāsane;",
  "thi-ap11:5.3_0": "Tena kammena sukatena,",
  "thi-ap11:5.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap11:6.1_0": "Tattha me sukataṁ byamhaṁ,",
  "thi-ap11:6.2_0": "ubbhayojanamuggataṁ;",
  "thi-ap11:6.3_0": "Kūṭāgāravarūpetaṁ,",
  "thi-ap11:6.4_0": "mahāsanasubhūsitaṁ.",
  "thi-ap11:7.1_0": "Accharā satasahassā,",
  "thi-ap11:7.2_0": "upatiṭṭhanti maṁ sadā;",
  "thi-ap11:7.3_0": "Aññe deve atikkamma,",
  "thi-ap11:7.4_0": "atirocāmi sabbadā.",
  "thi-ap11:8.1_0": "Catusaṭṭhi devarājūnaṁ,",
  "thi-ap11:8.2_0": "mahesittamakārayiṁ;",
  "thi-ap11:8.3_0": "Tesaṭṭhi cakkavattīnaṁ,",
  "thi-ap11:8.4_0": "mahesittamakārayiṁ.",
  "thi-ap11:9.1_0": "Suvaṇṇavaṇṇā hutvāna,",
  "thi-ap11:9.2_0": "bhavesu saṁsarāmahaṁ;",
  "thi-ap11:9.3_0": "Sabbattha pavarā homi,",
  "thi-ap11:9.4_0": "uposathassidaṁ phalaṁ.",
  "thi-ap11:10.1_0": "Hatthiyānaṁ assayānaṁ,",
  "thi-ap11:10.2_0": "rathayānañca sīvikaṁ;",
  "thi-ap11:10.3_0": "Labhāmi sabbamevetaṁ,",
  "thi-ap11:10.4_0": "uposathassidaṁ phalaṁ.",
  "thi-ap11:11.1_0": "Soṇṇamayaṁ rūpimayaṁ,",
  "thi-ap11:11.2_0": "athopi phalikāmayaṁ;",
  "thi-ap11:11.3_0": "Lohitaṅgamayañceva,",
  "thi-ap11:11.4_0": "sabbaṁ paṭilabhāmahaṁ.",
  "thi-ap11:12.1_0": "Koseyyakambaliyāni,",
  "thi-ap11:12.2_0": "khomakappāsikāni ca;",
  "thi-ap11:12.3_0": "Mahagghāni ca vatthāni,",
  "thi-ap11:12.4_0": "sabbaṁ paṭilabhāmahaṁ.",
  "thi-ap11:13.1_0": "Annaṁ pānaṁ khādanīyaṁ,",
  "thi-ap11:13.2_0": "vatthasenāsanāni ca;",
  "thi-ap11:13.3_0": "Sabbametaṁ paṭilabhe,",
  "thi-ap11:13.4_0": "uposathassidaṁ phalaṁ.",
  "thi-ap11:14.1_0": "Varagandhañca mālañca,",
  "thi-ap11:14.2_0": "cuṇṇakañca vilepanaṁ;",
  "thi-ap11:14.3_0": "Sabbametaṁ paṭilabhe,",
  "thi-ap11:14.4_0": "uposathassidaṁ phalaṁ.",
  "thi-ap11:15.1_0": "Kūṭāgārañca pāsādaṁ,",
  "thi-ap11:15.2_0": "maṇḍapaṁ hammiyaṁ guhaṁ;",
  "thi-ap11:15.3_0": "Sabbametaṁ paṭilabhe,",
  "thi-ap11:15.4_0": "uposathassidaṁ phalaṁ.",
  "thi-ap11:16.1_0": "Jātiyā sattavassāhaṁ,",
  "thi-ap11:16.2_0": "pabbajiṁ anagāriyaṁ;",
  "thi-ap11:16.3_0": "Aḍḍhamāse asampatte,",
  "thi-ap11:16.4_0": "arahattamapāpuṇiṁ.",
  "thi-ap11:17.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap11:17.2_0": "bhavā sabbe samūhatā;",
  "thi-ap11:17.3_0": "Sabbāsavā parikkhīṇā,",
  "thi-ap11:17.4_0": "natthi dāni punabbhavo.",
  "thi-ap11:18.1_0": "Ekanavutito kappe,",
  "thi-ap11:18.2_0": "yaṁ kammamakariṁ tadā;",
  "thi-ap11:18.3_0": "Duggatiṁ nābhijānāmi,",
  "thi-ap11:18.4_0": "uposathassidaṁ phalaṁ.",
  "thi-ap11:19.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap11:19.2_0": "…pe…",
  "thi-ap11:19.3_0": "viharāmi anāsavā.",
  "thi-ap11:20.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap11:20.2_0": "…pe…",
  "thi-ap11:20.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap11:21.1_0": "Paṭisambhidā catasso,",
  "thi-ap11:21.2_0": "…pe…",
  "thi-ap11:21.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap11:22.1_0": "Itthaṁ sudaṁ ekūposathikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap11:23.1_0": "Ekūposathikātheriyāpadānaṁ paṭhamaṁ."
}