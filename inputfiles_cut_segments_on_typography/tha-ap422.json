{
  "tha-ap422:0.1_0": "Therāpadāna",
  "tha-ap422:0.2_0": "Bhaddālivagga",
  "tha-ap422:0.3_0": "10. Mañcadāyakattheraapadāna",
  "tha-ap422:1.1_0": "“Parinibbute kāruṇike,",
  "tha-ap422:1.2_0": "siddhatthe lokanāyake;",
  "tha-ap422:1.3_0": "Vitthārike pāvacane,",
  "tha-ap422:1.4_0": "devamānusasakkate.",
  "tha-ap422:2.1_0": "Caṇḍālo āsahaṁ tattha,",
  "tha-ap422:2.2_0": "āsandipīṭhakārako;",
  "tha-ap422:2.3_0": "Tena kammena jīvāmi,",
  "tha-ap422:2.4_0": "tena posemi dārake.",
  "tha-ap422:3.1_0": "Āsandiṁ sukataṁ katvā,",
  "tha-ap422:3.2_0": "pasanno sehi pāṇibhi;",
  "tha-ap422:3.3_0": "Sayamevupagantvāna,",
  "tha-ap422:3.4_0": "bhikkhusaṅghassadāsahaṁ.",
  "tha-ap422:4.1_0": "Tena kammena sukatena,",
  "tha-ap422:4.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap422:4.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap422:4.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap422:5.1_0": "Devalokagato santo,",
  "tha-ap422:5.2_0": "modāmi tidase gaṇe;",
  "tha-ap422:5.3_0": "Sayanāni mahagghāni,",
  "tha-ap422:5.4_0": "nibbattanti yadicchakaṁ.",
  "tha-ap422:6.1_0": "Paññāsakkhattuṁ devindo,",
  "tha-ap422:6.2_0": "devarajjamakārayiṁ;",
  "tha-ap422:6.3_0": "Asītikkhattuṁ rājā ca,",
  "tha-ap422:6.4_0": "cakkavattī ahosahaṁ.",
  "tha-ap422:7.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap422:7.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap422:7.3_0": "Sukhito yasavā homi,",
  "tha-ap422:7.4_0": "mañcadānassidaṁ phalaṁ.",
  "tha-ap422:8.1_0": "Devalokā cavitvāna,",
  "tha-ap422:8.2_0": "emi ce mānusaṁ bhavaṁ;",
  "tha-ap422:8.3_0": "Mahārahā susayanā,",
  "tha-ap422:8.4_0": "sayameva bhavanti me.",
  "tha-ap422:9.1_0": "Ayaṁ pacchimako mayhaṁ,",
  "tha-ap422:9.2_0": "carimo vattate bhavo;",
  "tha-ap422:9.3_0": "Ajjāpi sayane kāle,",
  "tha-ap422:9.4_0": "sayanaṁ upatiṭṭhati.",
  "tha-ap422:10.1_0": "Catunnavutito kappe,",
  "tha-ap422:10.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap422:10.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap422:10.4_0": "mañcadānassidaṁ phalaṁ.",
  "tha-ap422:11.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap422:11.2_0": "…pe…",
  "tha-ap422:11.3_0": "viharāmi anāsavo.",
  "tha-ap422:12.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap422:12.2_0": "…pe…",
  "tha-ap422:12.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap422:13.1_0": "Paṭisambhidā catasso,",
  "tha-ap422:13.2_0": "…pe…",
  "tha-ap422:13.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap422:14.1_0": "Itthaṁ sudaṁ āyasmā mañcadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap422:15.1_0": "Mañcadāyakattherassāpadānaṁ dasamaṁ.",
  "tha-ap422:16.1_0": "Bhaddālivaggo bācattālīsamo.",
  "tha-ap422:17.1_0": "Tassuddānaṁ",
  "tha-ap422:18.1_0": "Bhaddālī ekachatto ca,",
  "tha-ap422:18.2_0": "tiṇasūlo ca maṁsado;",
  "tha-ap422:18.3_0": "Nāgapallaviko dīpī,",
  "tha-ap422:18.4_0": "ucchaṅgi yāgudāyako.",
  "tha-ap422:19.1_0": "Patthodanī mañcadado,",
  "tha-ap422:19.2_0": "gāthāyo gaṇitā ciha;",
  "tha-ap422:19.3_0": "Dvesatāni ca gāthānaṁ,",
  "tha-ap422:19.4_0": "gāthā cekā taduttari."
}