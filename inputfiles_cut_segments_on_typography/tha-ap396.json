{
  "tha-ap396:0.1_0": "Therāpadāna",
  "tha-ap396:0.2_0": "Pilindavacchavagga",
  "tha-ap396:0.3_0": "4. Madhudāyakattheraapadāna",
  "tha-ap396:1.1_0": "“Sindhuyā nadiyā tīre,",
  "tha-ap396:1.2_0": "sukato assamo mama;",
  "tha-ap396:1.3_0": "Tattha vācemahaṁ sisse,",
  "tha-ap396:1.4_0": "itihāsaṁ salakkhaṇaṁ.",
  "tha-ap396:2.1_0": "Dhammakāmā vinītā te,",
  "tha-ap396:2.2_0": "sotukāmā susāsanaṁ;",
  "tha-ap396:2.3_0": "Chaḷaṅge pāramippattā,",
  "tha-ap396:2.4_0": "sindhukūle vasanti te.",
  "tha-ap396:3.1_0": "Uppātagamane ceva,",
  "tha-ap396:3.2_0": "lakkhaṇesu ca kovidā;",
  "tha-ap396:3.3_0": "Uttamatthaṁ gavesantā,",
  "tha-ap396:3.4_0": "vasanti vipine tadā.",
  "tha-ap396:4.1_0": "Sumedho nāma sambuddho,",
  "tha-ap396:4.2_0": "loke uppajji tāvade;",
  "tha-ap396:4.3_0": "Amhākaṁ anukampanto,",
  "tha-ap396:4.4_0": "upāgacchi vināyako.",
  "tha-ap396:5.1_0": "Upāgataṁ mahāvīraṁ,",
  "tha-ap396:5.2_0": "sumedhaṁ lokanāyakaṁ;",
  "tha-ap396:5.3_0": "Tiṇasanthārakaṁ katvā,",
  "tha-ap396:5.4_0": "lokajeṭṭhassadāsahaṁ.",
  "tha-ap396:6.1_0": "Vipināto madhuṁ gayha,",
  "tha-ap396:6.2_0": "buddhaseṭṭhassadāsahaṁ;",
  "tha-ap396:6.3_0": "Sambuddho paribhuñjitvā,",
  "tha-ap396:6.4_0": "idaṁ vacanamabravi.",
  "tha-ap396:7.1_0": "‘Yo taṁ adāsi madhuṁ me,",
  "tha-ap396:7.2_0": "pasanno sehi pāṇibhi;",
  "tha-ap396:7.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap396:7.4_0": "suṇātha mama bhāsato.",
  "tha-ap396:8.1_0": "Iminā madhudānena,",
  "tha-ap396:8.2_0": "tiṇasanthārakena ca;",
  "tha-ap396:8.3_0": "Tiṁsa kappasahassāni,",
  "tha-ap396:8.4_0": "devaloke ramissati.",
  "tha-ap396:9.1_0": "Tiṁsa kappasahassamhi,",
  "tha-ap396:9.2_0": "okkākakulasambhavo;",
  "tha-ap396:9.3_0": "Gotamo nāma gottena,",
  "tha-ap396:9.4_0": "satthā loke bhavissati.",
  "tha-ap396:10.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap396:10.2_0": "oraso dhammanimmito;",
  "tha-ap396:10.3_0": "Sabbāsave pariññāya,",
  "tha-ap396:10.4_0": "nibbāyissatināsavo’.",
  "tha-ap396:11.1_0": "Devalokā idhāgantvā,",
  "tha-ap396:11.2_0": "mātukucchiṁ upāgate;",
  "tha-ap396:11.3_0": "Madhuvassaṁ pavassittha,",
  "tha-ap396:11.4_0": "chādayaṁ madhunā mahiṁ.",
  "tha-ap396:12.1_0": "Mayi nikkhantamattamhi,",
  "tha-ap396:12.2_0": "kucchiyā ca suduttarā;",
  "tha-ap396:12.3_0": "Tatrāpi madhuvassaṁ me,",
  "tha-ap396:12.4_0": "vassate niccakālikaṁ.",
  "tha-ap396:13.1_0": "Agārā abhinikkhamma,",
  "tha-ap396:13.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap396:13.3_0": "Lābhī annassa pānassa,",
  "tha-ap396:13.4_0": "madhudānassidaṁ phalaṁ.",
  "tha-ap396:14.1_0": "Sabbakāmasamiddhohaṁ,",
  "tha-ap396:14.2_0": "bhavitvā devamānuse;",
  "tha-ap396:14.3_0": "Teneva madhudānena,",
  "tha-ap396:14.4_0": "pattomhi āsavakkhayaṁ.",
  "tha-ap396:15.1_0": "Vuṭṭhamhi deve caturaṅgule tiṇe,",
  "tha-ap396:15.2_0": "Sampupphite dharaṇīruhe sañchanne;",
  "tha-ap396:15.3_0": "Suññe ghare maṇḍaparukkhamūlake,",
  "tha-ap396:15.4_0": "Vasāmi niccaṁ sukhito anāsavo.",
  "tha-ap396:16.1_0": "Majjhe mahante hīne ca,",
  "tha-ap396:16.2_0": "bhave sabbe atikkamiṁ;",
  "tha-ap396:16.3_0": "Ajja me āsavā khīṇā,",
  "tha-ap396:16.4_0": "natthi dāni punabbhavo.",
  "tha-ap396:17.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap396:17.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap396:17.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap396:17.4_0": "madhudānassidaṁ phalaṁ.",
  "tha-ap396:18.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap396:18.2_0": "bhavā sabbe samūhatā;",
  "tha-ap396:18.3_0": "Sabbāsavā parikkhīṇā,",
  "tha-ap396:18.4_0": "natthi dāni punabbhavo.",
  "tha-ap396:19.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap396:19.2_0": "…pe…",
  "tha-ap396:19.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap396:20.1_0": "Paṭisambhidā catasso,",
  "tha-ap396:20.2_0": "…pe…",
  "tha-ap396:20.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap396:21.1_0": "Itthaṁ sudaṁ āyasmā madhudāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap396:22.1_0": "Madhudāyakattherassāpadānaṁ catutthaṁ."
}