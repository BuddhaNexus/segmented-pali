{
  "tika-abh06t13:0_0": "13. Terasamo paricchedo",
  "tika-abh06t13:1_0": "Kārakapaṭivedhaniddeso",
  "tika-abh06t13:2_0": "Etthāha –",
  "tika-abh06t13:2_1": "niddiṭṭhā kusalādayo nāma dhammā,",
  "tika-abh06t13:2_2": "na panetesaṁ kārako attā niddiṭṭho.",
  "tika-abh06t13:2_3": "Tassa hi kārakassa vedakassa attano abhāve kusalākusalānaṁ dhammānaṁ abhāvo siyā,",
  "tika-abh06t13:2_4": "tesamabhāve tadāyattavuttīnaṁ tesaṁ vipākānamabhāvo hoti,",
  "tika-abh06t13:2_5": "tasmā kusalādīnaṁ dhammānaṁ desanā niratthikāti?",
  "tika-abh06t13:2_6": "Atra vuccate –",
  "tika-abh06t13:2_7": "nāyaṁ niratthikā,",
  "tika-abh06t13:2_8": "sātthikāvāyaṁ desanā.",
  "tika-abh06t13:2_9": "Yadi kārakassābhāvā kusalādīnamabhāvo siyā,",
  "tika-abh06t13:2_10": "tassa parikappitassa attanopi abhāvo siyā.",
  "tika-abh06t13:2_11": "Kiṁ kāraṇanti ce?",
  "tika-abh06t13:2_12": "Tassa attano aññassa kārakassābhāvato.",
  "tika-abh06t13:2_13": "Kārakābhāvepi kattā attā atthīti ce?",
  "tika-abh06t13:2_14": "Tathā kusalādīnampi asatipi kattari atthitā upagantabbā,",
  "tika-abh06t13:2_15": "kutoyaṁ tava tatthānurodho,",
  "tika-abh06t13:2_16": "idha virodhoti.",
  "tika-abh06t13:2_17": "Athāpi yathā pana loke kārakābhāvepi pathavīāpatejautuādayo paṭicca aṅkurādīnaṁ abhinibbatti dissati,",
  "tika-abh06t13:2_18": "tathā etesampi kusalādīnaṁ dhammānaṁ hetupaccayasāmaggiyā abhinibbatti hotīti veditabbā.",
  "tika-abh06t13:3_0": "Athāpi cettha tassā paññāya parikappito nicco dhuvo kusalādīnaṁ kattā attā paramatthato atthīti ce?",
  "tika-abh06t13:3_1": "Tamupaparikkhissāma tāva,",
  "tika-abh06t13:3_2": "so pana tāva attā kārako vedako kiṁ sacetano vā,",
  "tika-abh06t13:3_3": "udāhu acetano vāti?",
  "tika-abh06t13:3_4": "Kiñcettha –",
  "tika-abh06t13:3_5": "yadi acetano siyā,",
  "tika-abh06t13:3_6": "pākāratarupāsāṇasadiso siyā.",
  "tika-abh06t13:3_7": "Tassa kārakavedakattābhāvo siyā.",
  "tika-abh06t13:3_8": "Yadi sacetano,",
  "tika-abh06t13:3_9": "so cetanāya añño vā siyā,",
  "tika-abh06t13:3_10": "anañño vā.",
  "tika-abh06t13:3_11": "Athānañño,",
  "tika-abh06t13:3_12": "cetanāya nāse attanopi nāso siyā.",
  "tika-abh06t13:3_13": "Kiṁ kāraṇanti ce?",
  "tika-abh06t13:3_14": "Cetanāya anaññattā.",
  "tika-abh06t13:4_0": "Athāpi bhavato adhippāyo evaṁ siyā,",
  "tika-abh06t13:4_1": "attano pana nāso na bhavati niccattā,",
  "tika-abh06t13:4_2": "cetanāyayeva nāso bhavatīti? Vuccate –",
  "tika-abh06t13:4_3": "attano anāse sati cetanāyapi nāso na bhavati.",
  "tika-abh06t13:4_4": "Kiṁ kāraṇanti ce?",
  "tika-abh06t13:4_5": "Cetanāya anaññattā.",
  "tika-abh06t13:4_6": "Cetanattānaṁ anaññatte sati cetanāyayeva nāso bhavati,",
  "tika-abh06t13:4_7": "na attanoti ayuttametaṁ.",
  "tika-abh06t13:4_8": "Atha cetanāyayeva vināse visesakāraṇaṁ natthi,",
  "tika-abh06t13:4_9": "attāva nassatu,",
  "tika-abh06t13:4_10": "tiṭṭhatu cetanā.",
  "tika-abh06t13:4_11": "Atha cetanāya nāse attano nāso na bhavatīti ce?",
  "tika-abh06t13:4_12": "Cetanāya attā añño siyā.",
  "tika-abh06t13:4_13": "Atha aññassa attassa nāse sati sayaṁ nāso na bhavati,",
  "tika-abh06t13:4_14": "evañca sati “cetanāya anañño attā”ti tava paṭiññā hīnā.",
  "tika-abh06t13:4_15": "Athāpi cetanattānaṁ anaññatte sati attano anāso cetanāyapi anāso bhavatu.",
  "tika-abh06t13:4_16": "Atha na bhavati,",
  "tika-abh06t13:4_17": "paṭiññā hīnā.",
  "tika-abh06t13:4_18": "Atha vuttappakārato viparītaṁ vā siyā,",
  "tika-abh06t13:4_19": "attā nassatu,",
  "tika-abh06t13:4_20": "cetanā tiṭṭhatu.",
  "tika-abh06t13:4_21": "Atha pana evaṁ na bhavatīti ce?",
  "tika-abh06t13:4_22": "Anaññattapakkhaṁ pariccaja.",
  "tika-abh06t13:4_23": "Atha pana na pariccajasi,",
  "tika-abh06t13:4_24": "paṭiññāhīno bhavasi.",
  "tika-abh06t13:5_0": "Athāyaṁ bhavato adhippāyo siyā “nāyaṁ mama attā cetanāya anañño,",
  "tika-abh06t13:5_1": "aññoyevā”ti?",
  "tika-abh06t13:5_2": "Tatra vuccate –",
  "tika-abh06t13:5_3": "idha pana aññattaṁ duvidhaṁ hoti lakkhaṇakatamaññattañca desantarakatamaññattañcāti.",
  "tika-abh06t13:5_4": "Tattha kiṁ tvaṁ cetanattānaṁ lakkhaṇakatamaññattaṁ vadesi,",
  "tika-abh06t13:5_5": "udāhu desantarakatamaññattanti?",
  "tika-abh06t13:5_6": "Ahaṁ lakkhaṇakatamaññattaṁ vadāmīti.",
  "tika-abh06t13:5_7": "Yathā hi rūparasagandhādīnamekadese vattamānānampi lakkhaṇato aññattaṁ hoti,",
  "tika-abh06t13:5_8": "evaṁ cetanattānamekadese vattamānānampi lakkhaṇato aññattaṁ hoti,",
  "tika-abh06t13:5_9": "tasmā lakkhaṇakatamaññattaṁ vadāmīti.",
  "tika-abh06t13:5_10": "Tatra vuccate –",
  "tika-abh06t13:5_11": "yathā hi jātavedassa ḍayhamāne āmakasaṅghaṭe āmakavaṇṇavināse rasādīnaṁ vināso bhavati,",
  "tika-abh06t13:5_12": "tatheva cetanāya vināse attanopi vināso siyā.",
  "tika-abh06t13:5_13": "Kiṁ kāraṇanti ce?",
  "tika-abh06t13:5_14": "Rūparasādīnaṁ viya ekadesattāti.",
  "tika-abh06t13:6_0": "Athevaṁ bhavato mati siyā “ekadesatte satipi attano pana nāso na bhavati,",
  "tika-abh06t13:6_1": "cetanāyayeva vināso bhavatī”ti?",
  "tika-abh06t13:6_2": "Atra vuccate –",
  "tika-abh06t13:6_3": "attano anāse cetanāyapi anāsova hoti.",
  "tika-abh06t13:6_4": "Kiṁ kāraṇanti ce?",
  "tika-abh06t13:6_5": "Rūparasādīnaṁ viya avinibbhogato.",
  "tika-abh06t13:6_6": "Atha samāne ekadesatte avinibbhogabhāvepi kena hetunā cetanāya eva nāso bhavati,",
  "tika-abh06t13:6_7": "na pana attano.",
  "tika-abh06t13:6_8": "Atha visesakāraṇaṁ natthi,",
  "tika-abh06t13:6_9": "tava laddhiyā attāva nassatu,",
  "tika-abh06t13:6_10": "tiṭṭhatu cetanā.",
  "tika-abh06t13:6_11": "Atha cetanāya nāse attano nāso na bhavati,",
  "tika-abh06t13:6_12": "ubhinnaṁ ekadesatā natthi.",
  "tika-abh06t13:6_13": "Evañca sati ko dosoti ce?",
  "tika-abh06t13:6_14": "Yaṁ pana tayā vuttaṁ,",
  "tika-abh06t13:6_15": "yathā rūparasagandhādīnaṁ ekadese vattamānānampi lakkhaṇato aññattaṁ,",
  "tika-abh06t13:6_16": "tathā cetanattānamekadese vattamānānampi lakkhaṇato aññattanti?",
  "tika-abh06t13:6_17": "Tamayuttanti tava paṭiññā hīnā.",
  "tika-abh06t13:6_18": "Atha rūparasādīnaṁ viya samānepi ekadesatte yadi attano anāse cetanāyapi anāso na bhavati,",
  "tika-abh06t13:6_19": "paṭiññāhīno asi.",
  "tika-abh06t13:6_20": "Atha vuttappakārato viparītaṁ vā siyā,",
  "tika-abh06t13:6_21": "tava attā nassatu,",
  "tika-abh06t13:6_22": "cetanā tiṭṭhatu.",
  "tika-abh06t13:6_23": "Athevaṁ na bhavatīti ce?",
  "tika-abh06t13:6_24": "Ekadesatāva natthīti.",
  "tika-abh06t13:7_0": "Atha desantarakatamaññattaṁ vadesi,",
  "tika-abh06t13:7_1": "cetanattānaṁ aññatte sati ghaṭapaṭasakaṭagehādīnaṁ viya aññattaṁ siyā.",
  "tika-abh06t13:7_2": "Cetanāya vinā anaññatā te attā na ghaṭena vinā paṭo viya añño siyā.",
  "tika-abh06t13:7_3": "Añño ca hi ghaṭo añño ca paṭoti? Na,",
  "tika-abh06t13:7_4": "evañca sati ko dosoti ce?",
  "tika-abh06t13:7_5": "“Acetano attā”ti pubbe vuttadosato na parimuccatīti.",
  "tika-abh06t13:7_6": "Tasmā paramatthato na koci kattā vā vedako vā attā atthīti daṭṭhabbanti.",
  "tika-abh06t13:8_0": "Yadi evaṁ atha kasmā bhagavatā –",
  "tika-abh06t13:9_0": "779.",
  "tika-abh06t13:10_0": "“Asmā lokā paraṁ lokaṁ,",
  "tika-abh06t13:11_0": "So ca sandhāvatī naro;",
  "tika-abh06t13:12_0": "So ca karoti vedeti,",
  "tika-abh06t13:13_0": "Sukhadukkhaṁ sayaṁkata”nti ca.",
  "tika-abh06t13:14_0": "780.",
  "tika-abh06t13:15_0": "“Satto saṁsāramāpanno,",
  "tika-abh06t13:16_0": "Dukkhamassa mahabbhayaṁ;",
  "tika-abh06t13:17_0": "Atthi mātā atthi pitā,",
  "tika-abh06t13:18_0": "Atthi sattopapātiko”ti ca.",
  "tika-abh06t13:19_0": "781.",
  "tika-abh06t13:20_0": "“Bhārā have pañcakkhandhā,",
  "tika-abh06t13:21_0": "Bhārahāro ca puggalo;",
  "tika-abh06t13:22_0": "Bhārādānaṁ dukkhaṁ loke,",
  "tika-abh06t13:23_0": "Bhāranikkhepanaṁ sukha”nti ca.",
  "tika-abh06t13:24_0": "782.",
  "tika-abh06t13:25_0": "“Yañhi karoti puriso,",
  "tika-abh06t13:26_0": "Kāyena vācā uda cetasā;",
  "tika-abh06t13:27_0": "Tañhi tassa sakaṁ hoti,",
  "tika-abh06t13:28_0": "Tañca ādāya gacchatī”ti ca.",
  "tika-abh06t13:29_0": "783.",
  "tika-abh06t13:30_0": "“Ekassekena kappena,",
  "tika-abh06t13:31_0": "Puggalassaṭṭhisañcayo;",
  "tika-abh06t13:32_0": "Siyā pabbatasamo rāsi,",
  "tika-abh06t13:33_0": "Iti vuttaṁ mahesinā”ti ca.",
  "tika-abh06t13:34_0": "784.",
  "tika-abh06t13:35_0": "“Asaddho akataññū ca,",
  "tika-abh06t13:36_0": "Sandhicchedo ca yo naro;",
  "tika-abh06t13:37_0": "Hatāvakāso vantāso,",
  "tika-abh06t13:38_0": "Sa ve uttamaporiso”ti ca. –",
  "tika-abh06t13:39_0": "Vuttanti.",
  "tika-abh06t13:39_1": "Saccaṁ evaṁ vuttaṁ bhagavatā,",
  "tika-abh06t13:39_2": "tañca kho sammutivasena,",
  "tika-abh06t13:39_3": "na paramatthato.",
  "tika-abh06t13:39_4": "Nanu bhagavatā idampi vuttaṁ –",
  "tika-abh06t13:40_0": "785.",
  "tika-abh06t13:41_0": "“Kiṁ nu sattoti paccesi, māra diṭṭhigataṁ nu te;",
  "tika-abh06t13:42_0": "Suddhasaṅkhārapuñjoyaṁ, nayidha sattupalabbhatī”ti ca.",
  "tika-abh06t13:43_0": "786.",
  "tika-abh06t13:44_0": "“Yathāpi aṅgasambhārā,",
  "tika-abh06t13:45_0": "Hoti saddo ratho iti;",
  "tika-abh06t13:46_0": "Evaṁ khandhesu santesu,",
  "tika-abh06t13:47_0": "Hoti sattoti sammutī”ti ca.",
  "tika-abh06t13:48_0": "Tasmā na vacanamattamevāvalambitabbaṁ,",
  "tika-abh06t13:48_1": "na ca daḷhamūḷhagāhinā ca bhavitabbaṁ,",
  "tika-abh06t13:48_2": "garukulamupasevitvā suttapadānaṁ adhippāyo jānitabbo,",
  "tika-abh06t13:48_3": "suttapadesu abhiyogo kātabbo.",
  "tika-abh06t13:48_4": "Dve saccāni bhagavatā vuttāni –",
  "tika-abh06t13:48_5": "“sammutisaccaṁ,",
  "tika-abh06t13:48_6": "paramatthasaccañcā”ti.",
  "tika-abh06t13:48_7": "Tasmā dvepi sammutiparamatthasaccāni asaṅkarato ñātabbāni.",
  "tika-abh06t13:48_8": "Evaṁ asaṅkarato ñatvā koci kārako vā vedako vā nicco dhuvo attā paramatthato natthīti upaparikkhitvā",
  "tika-abh06t13:48_9": "paccayasāmaggiyā dhammānaṁ pavattiṁ sallakkhetvā paṇḍitena kulaputtena atthakāmena dukkhassantakiriyāya",
  "tika-abh06t13:48_10": "paṭipajjitabbanti.",
  "tika-abh06t13:49_0": "787.",
  "tika-abh06t13:50_0": "Yo imaṁ ganthaṁ accantaṁ, cinteti satatampi so;",
  "tika-abh06t13:51_0": "Kamena paramā paññā, tassa gacchati vepulaṁ.",
  "tika-abh06t13:52_0": "788.",
  "tika-abh06t13:53_0": "Atimatikaramādhinīharaṁ,",
  "tika-abh06t13:54_0": "Vimativināsakaraṁ piyakkaraṁ;",
  "tika-abh06t13:55_0": "Paṭhati suṇati yo sadā imaṁ,",
  "tika-abh06t13:56_0": "Vikasati tassa matīdha bhikkhuno.",
  "tika-abh06t13:57_0": "Iti abhidhammāvatāre kārakapaṭivedhaniddeso nāma",
  "tika-abh06t13:58_0": "Terasamo paricchedo."
}