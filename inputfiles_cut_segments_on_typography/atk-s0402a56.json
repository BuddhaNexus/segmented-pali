{
  "atk-s0402a56:0_0": "(21) 1. Sappurisavaggo",
  "atk-s0402a56:1_0": "1-6. Sikkhāpadasuttavaṇṇanā",
  "atk-s0402a56:2_0": "201.",
  "atk-s0402a56:2_1": "Pañcamassa paṭhame asappurisanti lāmakapurisaṁ tucchapurisaṁ mūḷhapurisaṁ avijjāya andhīkataṁ bālaṁ.",
  "atk-s0402a56:2_2": "Asappurisataranti atirekena asappurisaṁ.",
  "atk-s0402a56:2_3": "Itare dve vuttapaṭipakkhavasena veditabbā.",
  "atk-s0402a56:2_4": "Sesamettha uttānatthameva.",
  "atk-s0402a56:2_5": "Yathā cettha,",
  "atk-s0402a56:2_6": "evaṁ ito paresu pañcasu.",
  "atk-s0402a56:2_7": "Etesu hi paṭhamaṁ pañcaveravasena desitaṁ,",
  "atk-s0402a56:2_8": "dutiyaṁ assaddhammavasena,",
  "atk-s0402a56:2_9": "tatiyaṁ kāyavacīdvāravasena,",
  "atk-s0402a56:2_10": "catutthaṁ manodvāravasena,",
  "atk-s0402a56:2_11": "pañcamaṁ aṭṭhamicchattavasena,",
  "atk-s0402a56:2_12": "chaṭṭhaṁ dasamicchattavasena.",
  "atk-s0402a56:3_0": "7-10. Pāpadhammasuttacatukkavaṇṇanā",
  "atk-s0402a56:4_0": "207- 210.",
  "atk-s0402a56:4_1": "Sattame pāpanti lāmakaṁ saṁkiliṭṭhapuggalaṁ.",
  "atk-s0402a56:4_2": "Kalyāṇanti bhaddakaṁ anavajjapuggalaṁ.",
  "atk-s0402a56:4_3": "Sesamettha uttānatthameva.",
  "atk-s0402a56:4_4": "Aṭṭhamepi eseva nayo.",
  "atk-s0402a56:4_5": "Navame pāpadhammanti lāmakadhammaṁ.",
  "atk-s0402a56:4_6": "Kalyāṇadhammanti anavajjadhammaṁ.",
  "atk-s0402a56:4_7": "Sesamettha uttānatthameva.",
  "atk-s0402a56:4_8": "Dasamepi eseva nayo.",
  "atk-s0402a56:4_9": "Imasmiṁ vagge dasasupi suttesu agāriyappaṭipadā kathitā.",
  "atk-s0402a56:4_10": "Sacepi sotāpannasakadāgāmino honti,",
  "atk-s0402a56:4_11": "vaṭṭatiyevāti.",
  "atk-s0402a56:5_0": "Sappurisavaggo paṭhamo."
}