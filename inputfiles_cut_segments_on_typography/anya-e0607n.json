{
  "anya-e0607n:6_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0607n:7_0": "Pajjamadhu",
  "anya-e0607n:8_0": "Ānanda rañña ratanādi mahā yatinda,",
  "anya-e0607n:9_0": "Niccappabuddha padumappiya sevinaṅgī;",
  "anya-e0607n:10_0": "Buddhappiyena ghana buddha guṇappiyena,",
  "anya-e0607n:11_0": "Therālinā racita pajjamadhuṃ pibantu.",
  "anya-e0607n:12_0": "1.",
  "anya-e0607n:13_0": "Uṇṇāpapuṇṇasasimaṇdalato galitvā,",
  "anya-e0607n:14_0": "Pādambujaṅguli dalaṭṭha sudhā lavānaṃ;",
  "anya-e0607n:15_0": "Pantīva satthu nakhapanti pajāvisesaṃ,",
  "anya-e0607n:16_0": "Pīṇetu suddha sukhitammaṇa tunḍapītā.",
  "anya-e0607n:17_0": "2.",
  "anya-e0607n:18_0": "Khittāya māraripunā parivatya satthu,",
  "anya-e0607n:19_0": "Pādassayā jita disāya sitattalāya;",
  "anya-e0607n:20_0": "Yā jeti kañcana sarāvaliyā siriṃ sā,",
  "anya-e0607n:21_0": "Detanginaṃ raṇajayaṅgulipantikantā.",
  "anya-e0607n:22_0": "3.",
  "anya-e0607n:23_0": "Sovaṇṇa vaṇṇa sukhumacchavi somma kumma,",
  "anya-e0607n:24_0": "Piṭṭhīva piṭṭhi kamatunnati bhāti yesaṃ;",
  "anya-e0607n:25_0": "Tesuppatiṭṭhitasukomaladīghapaṇhi,",
  "anya-e0607n:26_0": "Pādā jinassa padadantu padaṃ janassa.",
  "anya-e0607n:27_0": "4.",
  "anya-e0607n:28_0": "Acchera paṅkajasiraṃ siriyā sakāya,",
  "anya-e0607n:29_0": "Ye maddino viya caranti saroja sīse;",
  "anya-e0607n:30_0": "Sañcumbitā viya ca tāni parāga rāgā,",
  "anya-e0607n:31_0": "Te nīrajā munipadā padadantu lakkhiṃ.",
  "anya-e0607n:32_0": "5.",
  "anya-e0607n:33_0": "Agāmi kāla jana maṅgala bhattu bhāvaṃ,",
  "anya-e0607n:34_0": "Vyākattumatra kusaleniva nimmitāni;",
  "anya-e0607n:35_0": "Yātrāsumaṭṭhasatamaṅgalakkhaṇāni,",
  "anya-e0607n:36_0": "Sādhetu naṃ padayugaṃ jayamaṅgalāni.",
  "anya-e0607n:37_0": "6.",
  "anya-e0607n:38_0": "Sassevijantuvarasantipurappavese,",
  "anya-e0607n:39_0": "Niccaṃ susajja ṭhapitāniva maṅgalāya;",
  "anya-e0607n:40_0": "Ye te dadhanti kalamaṅgalalakkhaṇāni,",
  "anya-e0607n:41_0": "Vattantu te jinapadā jayamaṅgalāya.",
  "anya-e0607n:42_0": "7.",
  "anya-e0607n:43_0": "Sabbebhibhūya sapadesu nipātanassa,",
  "anya-e0607n:44_0": "Saññāṇakaṃ viya yadassitasabbaloko;",
  "anya-e0607n:45_0": "Pādātyadhokatatilokasirovarā pi,",
  "anya-e0607n:46_0": "Lokaṃ puṇantu jayamaṅgalakāraṇāni.",
  "anya-e0607n:47_0": "8.",
  "anya-e0607n:48_0": "Lokattayekasaraṇattavibhāvanāya,",
  "anya-e0607n:49_0": "Sajjo va tiṭṭhati yahiṃ suvibhattaloko;",
  "anya-e0607n:50_0": "Taṃ sabbalokapaṭibimbitadappaṇābhaṃ,",
  "anya-e0607n:51_0": "Pādadvayaṃ janasusajjanahetu hotu.",
  "anya-e0607n:52_0": "9.",
  "anya-e0607n:53_0": "Lokuttarāya siriyādhigamāya suṭṭhu,",
  "anya-e0607n:54_0": "Rajanti yattha diguṇāniva pātu bhūtā;",
  "anya-e0607n:55_0": "Cakkāsanābhisahanemisahassarāni,",
  "anya-e0607n:56_0": "Tyaṅghī disantu sakalissariyaṃ janassa.",
  "anya-e0607n:57_0": "10.",
  "anya-e0607n:58_0": "Yatrullasanti duvidhāniva pātū bhūtā,",
  "anya-e0607n:59_0": "Dhammassasabbabhuvanassa ca issaratte;",
  "anya-e0607n:60_0": "Cakkāni cakkasadisāni sudassanassa,",
  "anya-e0607n:61_0": "Tānajja jantu saraṇā caraṇāni hontu.",
  "anya-e0607n:62_0": "11.",
  "anya-e0607n:63_0": "Sattesu vacchatu sirī sirivacchakena,",
  "anya-e0607n:64_0": "Sovatthi sotthimanutiṭṭhatu puggalesu;",
  "anya-e0607n:65_0": "Nandiṃ janānamanuvattatu nandivattī,",
  "anya-e0607n:66_0": "Sīsānalaṃkurutu pādavataṃsako pi.",
  "anya-e0607n:67_0": "12.",
  "anya-e0607n:68_0": "Bhaddāya pīṭhamupagacchatu bhaddapīṭhaṃ,",
  "anya-e0607n:69_0": "Vuddhiṃ janānamanuvattatu vaddhamānaṃ;",
  "anya-e0607n:70_0": "Puṇṇattamaṅgimanukubbatu puṇṇakumbho,",
  "anya-e0607n:71_0": "Pāti ca pātu satataṃ janataṃ apāyā.",
  "anya-e0607n:72_0": "13.",
  "anya-e0607n:73_0": "Setātapattamapanetamaghātape taṃ,",
  "anya-e0607n:74_0": "Khaggo vichindatu sadā duritārivagge;",
  "anya-e0607n:75_0": "Saṃklesadāhamapanetu satālavaṇṭa,",
  "anya-e0607n:76_0": "Saṃvījanī kumatimakkhikamorahattho.",
  "anya-e0607n:77_0": "14.",
  "anya-e0607n:78_0": "Ākaḍḍhano janavilocanamattaninnaṃ,",
  "anya-e0607n:79_0": "Vāretu sabbagativāranamaṅkuso so;",
  "anya-e0607n:80_0": "Pādambujassirivilāsaniketanaṃ va,",
  "anya-e0607n:81_0": "Pāsādalakhaṇamupetu manopasādaṃ.",
  "anya-e0607n:82_0": "15.",
  "anya-e0607n:83_0": "Pāṇīnamattabhajataṃ varapuṇṇapattaṃ,",
  "anya-e0607n:84_0": "Sammā dadātu padanissitapuṇṇapatto;",
  "anya-e0607n:85_0": "Pādesu jantu manabandhanadāmabhūtaṃ,",
  "anya-e0607n:86_0": "Dāmaṃ dametu vimalaṃ janatammanāni.",
  "anya-e0607n:87_0": "16.",
  "anya-e0607n:88_0": "Uṇhīsakuppalamaṇīpadumehi pādā,",
  "anya-e0607n:89_0": "Sassevijantukaraṇāni vibhūsayantu;",
  "anya-e0607n:90_0": "Sannettanāvupagatānamanagghakāni,",
  "anya-e0607n:91_0": "Bojjhaṅgasattaratanāni dade samuddo.",
  "anya-e0607n:92_0": "17.",
  "anya-e0607n:93_0": "Uttuṅga niccalaguṅā jitatāya niccaṃ,",
  "anya-e0607n:94_0": "Sevīva pādasiri nicca samubbahaṃ va;",
  "anya-e0607n:95_0": "Atrāpi sakkabhavanubbahaṇe niyutto,",
  "anya-e0607n:96_0": "Pādaṭṭhameru bhavataṃ bhavataṃ vibhūtyā.",
  "anya-e0607n:97_0": "18.",
  "anya-e0607n:98_0": "So cakkavāḷasikharī pyavataṃ samantā,",
  "anya-e0607n:99_0": "Sabbūpasaggavisarājanataṃ samaggaṃ;",
  "anya-e0607n:100_0": "Dīpā puthūpi caturo dvisahassa khuddā,",
  "anya-e0607n:101_0": "Dhārentvapāyapatamānamadatva jantuṃ.",
  "anya-e0607n:102_0": "19.",
  "anya-e0607n:103_0": "Sūro pabodhayatu jantu saroruhāni,",
  "anya-e0607n:104_0": "Cando pasāda kumudāni manodahesu;",
  "anya-e0607n:105_0": "Nakkhattajātamakhilaṃ subhatāya hotu,",
  "anya-e0607n:106_0": "Cakkaṃ dhajaṃ ripujayāya jayaddhajāya.",
  "anya-e0607n:107_0": "20.",
  "anya-e0607n:108_0": "Jetuṃ sasaṃsada-sudassana-cakkavatti,",
  "anya-e0607n:109_0": "Cakkānugantalalitaṃ yahimāvaheyya;",
  "anya-e0607n:110_0": "Cakkāṇuvatti parisāvata-cakkavatti,",
  "anya-e0607n:111_0": "Naṃvattataṃ padayugaṃ janatā hitāya.",
  "anya-e0607n:112_0": "21.",
  "anya-e0607n:113_0": "Pujetumāgata vatā vajirāsanaṭṭha,",
  "anya-e0607n:114_0": "Mindena chaḍḍita mahāvijayuttarākhyaṃ;",
  "anya-e0607n:115_0": "Saṃkhaṃ paviṭṭhamiva mārabhayā padādho,",
  "anya-e0607n:116_0": "Pādaṭṭhasaṃkhamiha vattatu santiyā vo.",
  "anya-e0607n:117_0": "22.",
  "anya-e0607n:118_0": "Sovaṇṇamacchayugalaṃ sivabhatta bhoge,",
  "anya-e0607n:119_0": "Icchā bahūpakaraṇaṃ bhavataṃ janānaṃ;",
  "anya-e0607n:120_0": "Kumbhīladhiggahitato va padutthacittā,",
  "anya-e0607n:121_0": "Pādambujākara vigāhi tu nopahontu.",
  "anya-e0607n:122_0": "23.",
  "anya-e0607n:123_0": "Sattāpagā janamanoja male jahantu,",
  "anya-e0607n:124_0": "Saṃklesadāhamapanentu dahā ca satta;",
  "anya-e0607n:125_0": "Selā ca satta vidadhantu janassa tānaṃ,",
  "anya-e0607n:126_0": "Lokappasiddhijanane bhavataṃ patākā.",
  "anya-e0607n:127_0": "24.",
  "anya-e0607n:128_0": "Pāṭaṅki santi gamane bhavatūpakārā,",
  "anya-e0607n:129_0": "Dāhettanesu jahataṃ padacāmaraṃ taṃ;",
  "anya-e0607n:130_0": "Sallokalocanamahussava-ussitaṃ va,",
  "anya-e0607n:131_0": "Vatteyya toraṇamanuttaramaṅgalāya.",
  "anya-e0607n:132_0": "25.",
  "anya-e0607n:133_0": "Yasmiṃ miginda gata bhīti balāva daḍḍha,",
  "anya-e0607n:134_0": "Dānā natā siravidāraṇa pīḷitāva;",
  "anya-e0607n:135_0": "Nālāgirī karivaro girimekhalo ca,",
  "anya-e0607n:136_0": "Taṃ sīhavikkamapadaṃ hanatā ghadantiṃ.",
  "anya-e0607n:137_0": "26.",
  "anya-e0607n:138_0": "Pāpāhino hanatu pādasuvaṇṇarājā,",
  "anya-e0607n:139_0": "Vyagghādhipo kalijane adataṃ asesaṃ;",
  "anya-e0607n:140_0": "Vālāha-assapati sampatituṃ adatvā,",
  "anya-e0607n:141_0": "Pāyesu pāpayatu santipurampajāyo.",
  "anya-e0607n:142_0": "27.",
  "anya-e0607n:143_0": "Chaddanta danti lalitaṃ galitaṃ rusamhā,",
  "anya-e0607n:144_0": "Luddetta dubbhini dise acalaṃ dadhāno;",
  "anya-e0607n:145_0": "Pādaṭṭhahatthipati sampati jantutāse,",
  "anya-e0607n:146_0": "Tāsetu hāsamaparandisataṃ satānaṃ.",
  "anya-e0607n:147_0": "28.",
  "anya-e0607n:148_0": "Sabbaṅgino caraṇuposatha hatthirājā,",
  "anya-e0607n:149_0": "Pāpetu sabbacatudīpikarajjalakkhiṃ;",
  "anya-e0607n:150_0": "Kittīva pādaparicārikatā niyuttā,",
  "anya-e0607n:151_0": "Kelasaselapaṭimā hitamācareyya.",
  "anya-e0607n:152_0": "29.",
  "anya-e0607n:153_0": "Sāmissa haṃsasamaye dahapāsabaddha,",
  "anya-e0607n:154_0": "Māsīna vesagamako viya pādahaṃso;",
  "anya-e0607n:155_0": "Nigghosa gantijitato viya mūgapakkho,",
  "anya-e0607n:156_0": "Yāretu sabba janatā bhavagantukattaṃ.",
  "anya-e0607n:157_0": "30.",
  "anya-e0607n:158_0": "Ohāya dibbasarasiṃ khilaloka sabba,",
  "anya-e0607n:159_0": "Rammaṅghivāpimavagāhitavāva pāde;",
  "anya-e0607n:160_0": "Erāvaṇo karivaro manasābhiruḷhe,",
  "anya-e0607n:161_0": "Jantuṃ purindadapuraṃ nayataṃ va sīghaṃ.",
  "anya-e0607n:162_0": "31.",
  "anya-e0607n:163_0": "Hitvā sakambhavanamaṅghinisevanattha,",
  "anya-e0607n:164_0": "Māgamma ramma taratāyiha nissito va;",
  "anya-e0607n:165_0": "Pāletva mūni padavāpitaraṅgabhaṅgi,",
  "anya-e0607n:166_0": "Mangī karontatanuvāsuki nāgarājā.",
  "anya-e0607n:167_0": "32.",
  "anya-e0607n:168_0": "Nāthassa kañcanasikhāvalajātilīla,",
  "anya-e0607n:169_0": "Māvikaraṃ va padanissitamorarājā;",
  "anya-e0607n:170_0": "Taṃ dhammadesanaraveniva luddakassa,",
  "anya-e0607n:171_0": "Lokassa pāpaphaṇino hanataṃ asesaṃ.",
  "anya-e0607n:172_0": "33.",
  "anya-e0607n:173_0": "Saṃsārasāgaragate sadhane jane te,",
  "anya-e0607n:174_0": "Netampade kalacatummukhahemanāvā;",
  "anya-e0607n:175_0": "Nibbāṇapaṭṭanavaraṃ bharukacchakantaṃ,",
  "anya-e0607n:176_0": "Suppārapaṇḍita gatā viya āsunāvā.",
  "anya-e0607n:177_0": "34.",
  "anya-e0607n:178_0": "Sambodhi ñāṇa paripācayato munissa,",
  "anya-e0607n:179_0": "Bhatto yathā himavataddi samādhihetu;",
  "anya-e0607n:180_0": "Evammanena bhajataṃ himavaddipāde,",
  "anya-e0607n:181_0": "Sambodhiñāṇa paripācanahetu hotu.",
  "anya-e0607n:182_0": "35.",
  "anya-e0607n:183_0": "Daḷhaṃ parājitatayā muninā sarena,",
  "anya-e0607n:184_0": "Suññassaropagata pañjara bandhanova;",
  "anya-e0607n:185_0": "So pādapañjaragato karavīkapakkhī,",
  "anya-e0607n:186_0": "Sabbesamappīyāvacañjahatā bhavantaṃ.",
  "anya-e0607n:187_0": "36.",
  "anya-e0607n:188_0": "Te cakkavāka makarā api koñca jīvaṃ,",
  "anya-e0607n:189_0": "Jīvādi pakkhivisarā sarasīva bhuttaṃ;",
  "anya-e0607n:190_0": "Vessantarena caraṇambuji nibbhajantā,",
  "anya-e0607n:191_0": "Jantu tahiṃ viya pade suramentu niccaṃ.",
  "anya-e0607n:192_0": "37.",
  "anya-e0607n:193_0": "Taṃ candakinnaragatiṃva gatassa bodhi,",
  "anya-e0607n:194_0": "Sattassa tassa sapajāpatikassa bhāvaṃ;",
  "anya-e0607n:195_0": "Saṃsūcayanta pada kinnara kinnarī ve,",
  "anya-e0607n:196_0": "Sāmaggimagga paṭi pattisu pāpayantu.",
  "anya-e0607n:197_0": "38.",
  "anya-e0607n:198_0": "Saṃrājadhānimusabho vahatagga bhāraṃ,",
  "anya-e0607n:199_0": "Pītippayo pajanayeyya savacchadhenu;",
  "anya-e0607n:200_0": "Sassevino abhiramentu chakāmasaggā,",
  "anya-e0607n:201_0": "Dhārentu jhāyimiha soḷasa dhātudhāmā.",
  "anya-e0607n:202_0": "39.",
  "anya-e0607n:203_0": "Sutvā jinassa karavīka sarammanuññaṃ,",
  "anya-e0607n:204_0": "Aññoñña bhītirahitā api paccanīkā;",
  "anya-e0607n:205_0": "Hitvā gatiṃ viya ṭhitā padasattarūpā,",
  "anya-e0607n:206_0": "Sabbaṃ bhavassita janānagatiṃ hanantu.",
  "anya-e0607n:207_0": "40.",
  "anya-e0607n:208_0": "Sovaṇṇa kāhaḷa yugo pamamindirāya,",
  "anya-e0607n:209_0": "Sannīrapuppha mukulopamamussavāya;",
  "anya-e0607n:210_0": "Niccaṃ susajja ṭhapitaṃ muni tiṭṭhatante,",
  "anya-e0607n:211_0": "Jaṅghādvayaṃ janavilocana maṅgalāya.",
  "anya-e0607n:212_0": "41.",
  "anya-e0607n:213_0": "Lakhyā vilāsa mukuradvaya sannikāsaṃ,",
  "anya-e0607n:214_0": "Tāḍaṅka maṇḍana viḍambakamaṃsu saṇḍaṃ;",
  "anya-e0607n:215_0": "Jānudvayaṃ laḷita sāgara bubbalābhaṃ,",
  "anya-e0607n:216_0": "Hotaṃ jagattaya nijatta vibhūsitunte.",
  "anya-e0607n:217_0": "42.",
  "anya-e0607n:218_0": "Chaddanti dinna varadanta yugopamānā,",
  "anya-e0607n:219_0": "Taṃ hatthi soṇḍa kama puṇṇa guṇā tavorū;",
  "anya-e0607n:220_0": "Līla payodhi siri keḷi suvaṇṇarambhā,",
  "anya-e0607n:221_0": "Khandhāva dentu paripuṇṇa gune janānāṃ.",
  "anya-e0607n:222_0": "43.",
  "anya-e0607n:223_0": "Jaṅghakkha kadvya samappita cittapāda,",
  "anya-e0607n:224_0": "Cakkadvayī manamanojahayo mune te;",
  "anya-e0607n:225_0": "Sonī ratho sirivaho manasā bhiruḷhaṃ,",
  "anya-e0607n:226_0": "Lokattayaṃ sivapuraṃ lahu pāpayātu.",
  "anya-e0607n:227_0": "44.",
  "anya-e0607n:228_0": "Rammora pākaṭa taṭāka taṭā savanta,",
  "anya-e0607n:229_0": "Romāvalī jala panālika koṭikaṭṭhā;",
  "anya-e0607n:230_0": "Nābhī gabhīra sarasī siri keḷitā te,",
  "anya-e0607n:231_0": "Sassevinaṃ vyasana ghammamalaṃ sametu.",
  "anya-e0607n:232_0": "45.",
  "anya-e0607n:233_0": "Kanticchaṭā luḷita rūpa payodhi nābhi,",
  "anya-e0607n:234_0": "Āvaṭṭa vaṭṭita nimujjita sabbaloko;",
  "anya-e0607n:235_0": "Sobhagga toya nivahaṃ visaso pivitvā,",
  "anya-e0607n:236_0": "Lokuttarādi sukha mucchitataṃ payātu.",
  "anya-e0607n:237_0": "46.",
  "anya-e0607n:238_0": "Gambhīra cittarahadaṃ paripūrayitvā,",
  "anya-e0607n:239_0": "Taṃ sandamāna karuṇambu pavāha tulyā;",
  "anya-e0607n:240_0": "Romālivallihari nābhi subhālavālā,",
  "anya-e0607n:241_0": "Detaṃ lahuṃ sivaphalaṃ bhajataṃ mune te.",
  "anya-e0607n:242_0": "47.",
  "anya-e0607n:243_0": "Cārūra sāriphalako kuṭilagga loma,",
  "anya-e0607n:244_0": "Pantī vibhatti sahito siri keḷi sajjo;",
  "anya-e0607n:245_0": "Saggāpavagga sukha jūtaka keḷi hetu,",
  "anya-e0607n:246_0": "Hotaṃ tiloka sukha jūtaka soṇḍakānaṃ.",
  "anya-e0607n:247_0": "48.",
  "anya-e0607n:248_0": "Gambhīra citta rahado dara gāhamāna,",
  "anya-e0607n:249_0": "Mettādayā kari vadhū kara sanni kāsā;",
  "anya-e0607n:250_0": "Sabbaṅginaṃ sivaphalaṃ tanu deva rukkhe,",
  "anya-e0607n:251_0": "Sākhā sakhā tava bhujā bhajataṃ dadantu.",
  "anya-e0607n:252_0": "49.",
  "anya-e0607n:253_0": "Nihāra bindu sahitaggadalopa sobhi,",
  "anya-e0607n:254_0": "Byālamba ratta padumadvaya bhaṅgi bhājā;",
  "anya-e0607n:255_0": "Pāpārisīsalunateniva ratta rattā,",
  "anya-e0607n:256_0": "Rattā karā tava bhavumbhuvi maṅgalāya.",
  "anya-e0607n:257_0": "50.",
  "anya-e0607n:258_0": "Rupassirī carita caṅkama vibbhamā te,",
  "anya-e0607n:259_0": "Piṭṭhī yathā kalala muddhani setu bhūtā;",
  "anya-e0607n:260_0": "Evaṃ bhavaṇṇava samuttaraṇāya setu,",
  "anya-e0607n:261_0": "Hotammahākanaka saṃkama sannikāsā.",
  "anya-e0607n:262_0": "51.",
  "anya-e0607n:263_0": "Saddhamma desana manohara bherināda,",
  "anya-e0607n:264_0": "Saṃcāraṇe sivapuraṃ visituṃ janānaṃ;",
  "anya-e0607n:265_0": "Gīvā suvaṇṇamaya cāru mutiṅga bheri,",
  "anya-e0607n:266_0": "Bhāvambhajā bhavatu bhūta vibhūtiyā te.",
  "anya-e0607n:267_0": "52.",
  "anya-e0607n:268_0": "Lakhī nivāsa vadanambuja matta ninna,",
  "anya-e0607n:269_0": "Mākaḍḍhayaṃ jana vilocana cañcarīke;",
  "anya-e0607n:270_0": "Sorabbha dhamma makaranda nisandamānaṃ,",
  "anya-e0607n:271_0": "Piṇetu tena sarasena sabhā jane te.",
  "anya-e0607n:272_0": "53.",
  "anya-e0607n:273_0": "Lakhī samāruhita vattarathe rathaṅga,",
  "anya-e0607n:274_0": "Dvandānu kāri miga rāja kapola līlaṃ;",
  "anya-e0607n:275_0": "Tādaṅka maṇḍalayugaṃ viya kaṇṇabhājaṃ,",
  "anya-e0607n:276_0": "Gaṇḍatthaladvyamalaṃkurutaṃ janatte.",
  "anya-e0607n:277_0": "54.",
  "anya-e0607n:278_0": "Lāvaṇṇa maṇṇava pavāḷa latā dvayābhaṃ,",
  "anya-e0607n:279_0": "Tandeha deva taru pallava kante mantaṃ;",
  "anya-e0607n:280_0": "Vattāravinda makaranda parājisobhaṃ,",
  "anya-e0607n:281_0": "Rattādharadvayamadho kurutaṃ janāghaṃ.",
  "anya-e0607n:282_0": "55.",
  "anya-e0607n:283_0": "Uṇṇā sakuntigata matthaka natthu kūpa,",
  "anya-e0607n:284_0": "Subbhū lakāra sahitoṭṭha pavāḷa nāvā;",
  "anya-e0607n:285_0": "Gattuttararaṇṇava gatā tava jantukānaṃ,",
  "anya-e0607n:286_0": "Hotaṃ bhavaṇṇava samuttaranaya nātha.",
  "anya-e0607n:287_0": "56.",
  "anya-e0607n:288_0": "Isaṃ vikāsa padumodara kesarāli,",
  "anya-e0607n:289_0": "Līlā vinaddha rucirā tava danta panti;",
  "anya-e0607n:290_0": "Vānī vadhū dharita mālati mālya tulyā,",
  "anya-e0607n:291_0": "Tassaṃ jānassa manarañjana mācareyya.",
  "anya-e0607n:292_0": "57.",
  "anya-e0607n:293_0": "Saddhamma nijjhara suratta silātalābhā,",
  "anya-e0607n:294_0": "Jivhā vacī naṭa vadhū kala raṅga bhūtā;",
  "anya-e0607n:295_0": "Saddhamma seṭṭha taraṇī nihitappiyā te,",
  "anya-e0607n:296_0": "Saṃsāra sāgara samuttaraṇāya hotu.",
  "anya-e0607n:297_0": "58.",
  "anya-e0607n:298_0": "Dantaṃsu kañcukīta rattadharo padhāne,",
  "anya-e0607n:299_0": "Jivhā suratta sayane mukha mandiraṭṭhe;",
  "anya-e0607n:300_0": "Āmokkha mutti vadhuyā sayitāya tuyhaṃ,",
  "anya-e0607n:301_0": "Kubbantu saṃgama malaṃ jana sotu kāmi.",
  "anya-e0607n:302_0": "59.",
  "anya-e0607n:303_0": "Uṇṇā tathābhinava patta varābhi rāmā,",
  "anya-e0607n:304_0": "Līlollasanta bhamukadvaya nīla pattā;",
  "anya-e0607n:305_0": "Ghānoru cāru kadalī vadanā lavālā,",
  "anya-e0607n:306_0": "Tuyhaṃ pavattatu ciraṃ jana maṅgalāya.",
  "anya-e0607n:307_0": "60.",
  "anya-e0607n:308_0": "Bālatthalī hari silātala piṭṭhikaṭṭha,",
  "anya-e0607n:309_0": "Bhūvallaridvaya mayūra yugassa tuyhaṃ;",
  "anya-e0607n:310_0": "Pañcappabhā rucira piccha yugassirīkaṃ,",
  "anya-e0607n:311_0": "Nettadvayaṃ manasi puñchatu pāpadhūliṃ.",
  "anya-e0607n:312_0": "61.",
  "anya-e0607n:313_0": "Indīvarāntagata bhiṅgika panti bhaṅgi,",
  "anya-e0607n:314_0": "Pañambujassaratate viya gacchapantī;",
  "anya-e0607n:315_0": "Nettambujassiri tirokaraṇīva tuyhaṃ,",
  "anya-e0607n:316_0": "Pamhāvalī sirigateha tiro karontu.",
  "anya-e0607n:317_0": "62.",
  "anya-e0607n:318_0": "Vattullasambuja vilocana haṃsa tuṇḍa,",
  "anya-e0607n:319_0": "Kañjaṃsu piñjara mulāla latā dvyābhaṃ;",
  "anya-e0607n:320_0": "Dolādvayaṃva savaṇadvyamatta lakkhyā,",
  "anya-e0607n:321_0": "Hotaṃ tavajja janatā maticārahetu.",
  "anya-e0607n:322_0": "63.",
  "anya-e0607n:323_0": "Vammīka matthaka sayānaka bhūridatta,",
  "anya-e0607n:324_0": "Bhoginda bhogavali vibbhamamā vahanti;",
  "anya-e0607n:325_0": "Ghānopariṭṭhitamune tava tuṇṇamuṇṇā,",
  "anya-e0607n:326_0": "Taggāhino viya janassa dadātu vittaṃ.",
  "anya-e0607n:327_0": "64.",
  "anya-e0607n:328_0": "Rūpindirāya vijaye khila loka rūpaṃ,",
  "anya-e0607n:329_0": "Ghāṇoru cāru parighopari baddha siddhā;",
  "anya-e0607n:330_0": "Nīlābha vāta viluthanta vayaddhajābhā,",
  "anya-e0607n:331_0": "Tiṭṭhantu sajja duritāri jayāya te bhū.",
  "anya-e0607n:332_0": "65.",
  "anya-e0607n:333_0": "Uṇṇassitopala nivesita bunda sandhi,",
  "anya-e0607n:334_0": "Ghāṇoru piṇḍakamaghā tapa rundhitunte;",
  "anya-e0607n:335_0": "Hotammukhambuja sirī sirasussitābhaṃ,",
  "anya-e0607n:336_0": "Bhū nīla paṭṭika lalāta suvaṇṇa chattaṃ.",
  "anya-e0607n:337_0": "66.",
  "anya-e0607n:338_0": "Rupaṅka vedana vilocana bāna diṭṭhī,",
  "anya-e0607n:339_0": "Dhārā nisāna maṇivaṭṭa sirī siro te;",
  "anya-e0607n:340_0": "Siddhā matosadha katañjana puñja lakkhī,",
  "anya-e0607n:341_0": "Hotaṃ janassa nayanāmaya nāsanāya.",
  "anya-e0607n:342_0": "67.",
  "anya-e0607n:343_0": "Sakkhandha bāhuyuga torana majjha gīvā,",
  "anya-e0607n:344_0": "Dharappitassirighato pari mussavāya;",
  "anya-e0607n:345_0": "Nīluppalāva ṭhapitā savibhatti kante,",
  "anya-e0607n:346_0": "Kesā bhavantu bhuvanattaya maṅgalāya.",
  "anya-e0607n:347_0": "68.",
  "anya-e0607n:348_0": "Hemagghiye ṭhapita nīla silā kapāle,",
  "anya-e0607n:349_0": "Pajjota jāla lalitaṃ muni sārayantī;",
  "anya-e0607n:350_0": "Rūpassirī sirasi bhūsita hema mālā,",
  "anya-e0607n:351_0": "Kārā karotu subhagaṃ tava ketu mālā.",
  "anya-e0607n:352_0": "69.",
  "anya-e0607n:353_0": "Bhyāmappabhāli tava kañcana mora kāle,",
  "anya-e0607n:354_0": "Surodaye vitata candaka cakkalakkhī;",
  "anya-e0607n:355_0": "Meghāvanaddha sikharunnata hema selā,",
  "anya-e0607n:356_0": "Yantindacāpa vikatīva dadātu sobhaṃ.",
  "anya-e0607n:357_0": "70.",
  "anya-e0607n:358_0": "Paṭṭhāya te paṇidhito suci dāna sīla,",
  "anya-e0607n:359_0": "Nekkhamma pañña viriyakkhama saccadhiṭṭhā;",
  "anya-e0607n:360_0": "Mettā upekkhiti ime dasa pūratova,",
  "anya-e0607n:361_0": "Pūrentu pārami guṇā janatānamatte.",
  "anya-e0607n:362_0": "71.",
  "anya-e0607n:363_0": "Pattuttaruttaradasā paṇidhāna bījā,",
  "anya-e0607n:364_0": "Cetoradharāya karuṇā jala sekha vuddhā;",
  "anya-e0607n:365_0": "Sabbaññu ñāṇa phaladā sati vāṭa guttā,",
  "anya-e0607n:366_0": "Taṃ samphalandisatu pāramitā latā te.",
  "anya-e0607n:367_0": "72.",
  "anya-e0607n:368_0": "Ābodhi puṇṇami padiṭṭha dinādito te,",
  "anya-e0607n:369_0": "Sambhāra kāla sita pakkha kamābhi vuddho;",
  "anya-e0607n:370_0": "Sampuṇṇa pārami guṇāmataraṃsi taṃva,",
  "anya-e0607n:371_0": "Sabbaṅgi kunda kumudāni pabodhayeyya.",
  "anya-e0607n:372_0": "73.",
  "anya-e0607n:373_0": "Āpacchimabbhava sivapphala lābha dānā,",
  "anya-e0607n:374_0": "Dānappabandhamapidāna phalappabhandaṃ;",
  "anya-e0607n:375_0": "Saṃvaḍḍhayi tvaṃ abhipatthanato yathevaṃ,",
  "anya-e0607n:376_0": "Jantuttaruttara phalaṃ khalu sambhunantu.",
  "anya-e0607n:377_0": "74.",
  "anya-e0607n:378_0": "Ārambhatoppabhuti yāva tavaggamaggā,",
  "anya-e0607n:379_0": "Vikkhālita ghakalusaṃ suci sīla toyaṃ;",
  "anya-e0607n:380_0": "Mettā dayā madhura sītalatāyupetaṃ,",
  "anya-e0607n:381_0": "Sodhetu tvaṃva bhava nissita jantu metaṃ.",
  "anya-e0607n:382_0": "75.",
  "anya-e0607n:383_0": "Āpaccimattamabhinikkhamanābhiyogā,",
  "anya-e0607n:384_0": "Paṭṭhāya tampabhavato paripuṇṇa gehā;",
  "anya-e0607n:385_0": "Tvaṃ sabba jāti gahato api nikkhamittho,",
  "anya-e0607n:386_0": "Evaṃ janā bhava dukhā khalu nikkhamantu.",
  "anya-e0607n:387_0": "76.",
  "anya-e0607n:388_0": "Ekaggato pala tale nisitā cirandhi,",
  "anya-e0607n:389_0": "Dhārā sucittu sutale sati daṇḍa baddhe;",
  "anya-e0607n:390_0": "Nibbijjhi lakkhaṇa dhanuṭṭhiti santi lakkhaṃ,",
  "anya-e0607n:391_0": "Khittā tayonamanu vijjhatu jantu khittā.",
  "anya-e0607n:392_0": "77.",
  "anya-e0607n:393_0": "Tvaṃ pāramī jala nidhiṃ caturiha bāhu,",
  "anya-e0607n:394_0": "Sattīhi suttari ciraṃ janakova sindhuṃ;",
  "anya-e0607n:395_0": "Sampanna vikkama phalosi yathā casova,",
  "anya-e0607n:396_0": "Evaṃ janā viriyatapphalame dhayantu.",
  "anya-e0607n:397_0": "78.",
  "anya-e0607n:398_0": "Satta paradha dahanesu ciraṃ sudhantaṃ,",
  "anya-e0607n:399_0": "Khantī suvaṇṇa kata rūpa samantimattā;",
  "anya-e0607n:400_0": "Sabbā parādhamasahi tvaṃasayhamevaṃ,",
  "anya-e0607n:401_0": "Sabbe janāpi khamanena bhajantu santiṃ.",
  "anya-e0607n:402_0": "79.",
  "anya-e0607n:403_0": "Lakkhādhikaṃ catura saṃkhiya kappa kālaṃ,",
  "anya-e0607n:404_0": "Saccena suṭṭhu paribhāvita vācino te;",
  "anya-e0607n:405_0": "Vācāya sacca phusitāya samenti jantu,",
  "anya-e0607n:406_0": "Evaṃ visuddha vacanā janatā bhavantu.",
  "anya-e0607n:407_0": "80.",
  "anya-e0607n:408_0": "Ādinna dhamma mahiyatthira suppatiṭṭhā,",
  "anya-e0607n:409_0": "Dhiṭṭhāna pārami mahā vajiraddi tuyhaṃ;",
  "anya-e0607n:410_0": "Sattena kena pi yathāhi abhejja nejjo,",
  "anya-e0607n:411_0": "Evaṃ janāpi kusalesu adhiṭṭha hantu.",
  "anya-e0607n:412_0": "81.",
  "anya-e0607n:413_0": "Tvaṃ sabba satta cirabhāvita metta citta,",
  "anya-e0607n:414_0": "Toyehi saṃsamita kodha mahā hutāso;",
  "anya-e0607n:415_0": "Lokuttaraṃ taditaraṃ hitamāvahittho,",
  "anya-e0607n:416_0": "Evaṃ janesu janatā hitamāvahantū.",
  "anya-e0607n:417_0": "82.",
  "anya-e0607n:418_0": "Mittopakāra paṭipakkha janāpakāre,",
  "anya-e0607n:419_0": "Tvaṃ nibbikāra manaso cirabhāvanāya;",
  "anya-e0607n:420_0": "Pattosilābha pabhutaṭṭusu nibbikāraṃ,",
  "anya-e0607n:421_0": "Evaṃ janānunaya kopa nudā bhavantu.",
  "anya-e0607n:422_0": "83.",
  "anya-e0607n:423_0": "Sampanna hetu vibhavo tusite vimānaṃ,",
  "anya-e0607n:424_0": "Yuttaṃ guṇehi navabhippadavī vimānaṃ;",
  "anya-e0607n:425_0": "Tvaṃ vādhiparamidhirohiniyā tiloko,",
  "anya-e0607n:426_0": "Ārohatu bhaya sukhaṃ padavī vimānaṃ.",
  "anya-e0607n:427_0": "84.",
  "anya-e0607n:428_0": "Tvaṃverahaṃsi samabujjhi yathāca sammā,",
  "anya-e0607n:429_0": "Sampanna vijja caraṇo sugatosi hontu;",
  "anya-e0607n:430_0": "Lokaṃ vido purisadammasusārathī si,",
  "anya-e0607n:431_0": "Satthāsi bujjhi bhagavā si tatheva jantu.",
  "anya-e0607n:432_0": "85.",
  "anya-e0607n:433_0": "Saccitta bhū nidahitaṃ janatāya tuyhaṃ,",
  "anya-e0607n:434_0": "Kalyāṇavaṇṇaratanaṇṇavajātibhinnaṃ;",
  "anya-e0607n:435_0": "Dukkhaggi cora jalupaddutajāti gehe,",
  "anya-e0607n:436_0": "Tassā sukhaṃ bhavatu jīvitumāpadāya.",
  "anya-e0607n:437_0": "86.",
  "anya-e0607n:438_0": "Vācā vicitta vara tantu gataṅgi kaṇṭhe,",
  "anya-e0607n:439_0": "Svā mutta sagguṇa mahā ratanā valī te;",
  "anya-e0607n:440_0": "Vevaṇṇi yattani bhavaṃ sakalampahāya,",
  "anya-e0607n:441_0": "Hotañjanassa siri saṅgama maṅgalāya.",
  "anya-e0607n:442_0": "87.",
  "anya-e0607n:443_0": "Taṃ sagguṇatthava dahaṭṭha sutippanāli,",
  "anya-e0607n:444_0": "Nissandamāna guṇanīra nipāna tinte;",
  "anya-e0607n:445_0": "Khettetta saññini janā kata loma haṃsa,",
  "anya-e0607n:446_0": "Bījankurī kusala sassa phalaṃ labhantu.",
  "anya-e0607n:447_0": "88.",
  "anya-e0607n:448_0": "Āpāyikappabhuti dukkha nidāgha kāla,",
  "anya-e0607n:449_0": "Santāpitā nikhila loka mano kadambā;",
  "anya-e0607n:450_0": "Taṃ vaṅṇa megha phusanā hasanaṅkurehi,",
  "anya-e0607n:451_0": "Iddhā bhavantu mati vallari vellītā te.",
  "anya-e0607n:452_0": "89.",
  "anya-e0607n:453_0": "Hetuddasā phaladasā samavaṭṭhitaṃ taṃ,",
  "anya-e0607n:454_0": "Sabbattha satta hitamāvahaṇena siddhaṃ;",
  "anya-e0607n:455_0": "Cintāpathātiganubhāva vibhāvanante,",
  "anya-e0607n:456_0": "Bhūtānamatthu caritabbhutamattha sidhyā.",
  "anya-e0607n:457_0": "90.",
  "anya-e0607n:458_0": "Aṅgārakāsumabhilaṅghiya dāna kāle,",
  "anya-e0607n:459_0": "Bhattattano pada paṭicchaka paṅkajā ca;",
  "anya-e0607n:460_0": "Yātakkhaṇe tava pade dhaṭamuṭṭhahitvā,",
  "anya-e0607n:461_0": "Paṅkeruhāṃ siva madhuṃ sarataṃ dadantu.",
  "anya-e0607n:462_0": "91.",
  "anya-e0607n:463_0": "Saccena maccha pati vassita vassadhārā,",
  "anya-e0607n:464_0": "Satte dayāya tava vassita vassadhārā;",
  "anya-e0607n:465_0": "Gimhe janassa samayiṃsu yathā tathātā,",
  "anya-e0607n:466_0": "Dhamambuvuṭṭhiva samentu kilesa dāhe.",
  "anya-e0607n:467_0": "92.",
  "anya-e0607n:468_0": "Chaddanta nāga patinā khamatā parādhaṃ,",
  "anya-e0607n:469_0": "Chetvā kare ṭhapita dantavarāva luddaṃ;",
  "anya-e0607n:470_0": "Loke hitāya ṭhapitā tava danta dhātu,",
  "anya-e0607n:471_0": "Seṭṭhā janaṃ siva puraṃ lahu pāpayantu.",
  "anya-e0607n:472_0": "93.",
  "anya-e0607n:473_0": "Taṃ temiyākhya yatinossama mālakamhi,",
  "anya-e0607n:474_0": "Okiṇṇa mutta kanakā vuja vippakiṇṇā;",
  "anya-e0607n:475_0": "Kāruñña vārida cuto daka bindu bandhū,",
  "anya-e0607n:476_0": "Dhātu samentu tava jantusu dukkhadāhe.",
  "anya-e0607n:477_0": "94.",
  "anya-e0607n:478_0": "Raṭṭhassa attha caraṇāya asammukhassa,",
  "anya-e0607n:479_0": "Rāmena dinna tiṇa saṃkhata pādukāva;",
  "anya-e0607n:480_0": "Bhuttā tayā ciramasammukha nāgatassa,",
  "anya-e0607n:481_0": "Lokassa atthamanu tiṭṭhatu patta dhātu.",
  "anya-e0607n:482_0": "95.",
  "anya-e0607n:483_0": "Vutto janānamupadissa varāha raññā,",
  "anya-e0607n:484_0": "Satthiṃ sahassa saradaṃ viya ñāya dhammo;",
  "anya-e0607n:485_0": "Ādeyya heyyamupadissa tayā pavutto,",
  "anya-e0607n:486_0": "Dhammo pavattatu ciraṃ janatā hitāya.",
  "anya-e0607n:487_0": "96.",
  "anya-e0607n:488_0": "Mārāri maddana hitādhigamaṃ karotā,",
  "anya-e0607n:489_0": "Bhatto tayā vara mahā jaya bodhi rājā;",
  "anya-e0607n:490_0": "Saggā pavavagga hitahetu janassa hantvā,",
  "anya-e0607n:491_0": "Sabbantarāyamiha tiṭṭhatu suṭṭhu sajjo.",
  "anya-e0607n:492_0": "97.",
  "anya-e0607n:493_0": "Sāmoda vaṇṇa bhajanī guṇa mañjarīyaṃ,",
  "anya-e0607n:494_0": "Cariyā latā vikasitā tava sapphalaṅgaṃ;",
  "anya-e0607n:495_0": "Okiṇṇa citta madhupe rasa pīṇayanti,",
  "anya-e0607n:496_0": "Sambhāvitā bhuvi pavattatu matthakehi.",
  "anya-e0607n:497_0": "98.",
  "anya-e0607n:498_0": "Sambuddha selavalayantara jānanavhā,",
  "anya-e0607n:499_0": "Nottattato tipathagā yati sāgaraṭṭhā;",
  "anya-e0607n:500_0": "Dhammā pagā suti vase tarite puṇanti,",
  "anya-e0607n:501_0": "Sambhāra sassamiha vattatu pacayanti.",
  "anya-e0607n:502_0": "99.",
  "anya-e0607n:503_0": "Paññāṇa kūpa sita paggaha vāyu gāhī,",
  "anya-e0607n:504_0": "Saddhā lakāra sahitā sati pota vāhā;",
  "anya-e0607n:505_0": "Sampāpayātu bhava sāgara pāra tīra,",
  "anya-e0607n:506_0": "Sappattanaṃ varadhane pati patti nāvā.",
  "anya-e0607n:507_0": "100.",
  "anya-e0607n:508_0": "Bojjhaṅga satta ratanākara dhamma khandha,",
  "anya-e0607n:509_0": "Gambhīra nīra caya sāsana sāgaro saṃ;",
  "anya-e0607n:510_0": "So sīlyananta tanu veṭitha ñāṇa mantha,",
  "anya-e0607n:511_0": "Selena manthitavataṃ disatā mataṃ ve.",
  "anya-e0607n:512_0": "101.",
  "anya-e0607n:513_0": "Vuttena tena vidhinā vidhinā tato taṃ,",
  "anya-e0607n:514_0": "Laddhā nubhūtamamataṃ khila dosa nāsaṃ;",
  "anya-e0607n:515_0": "Accanta roga jaratā maraṇā bhi bhūtaṃ,",
  "anya-e0607n:516_0": "Bhūtaṃ karotu amaraṃ ajaraṃ arogaṃ.",
  "anya-e0607n:517_0": "102.",
  "anya-e0607n:518_0": "Saddhamma rāja raviniggata dhammaraṃsi,",
  "anya-e0607n:519_0": "Phullo dhutaṅgadala saṃvara kesarāli;",
  "anya-e0607n:520_0": "Saṅghāravinda nikaro samadhuṃ samādhi,",
  "anya-e0607n:521_0": "Sakkiṇṇiko disatu sāsana vāpi jato.",
  "anya-e0607n:522_0": "103.",
  "anya-e0607n:523_0": "Ānanda rañña ratanādi mahā yatinda,",
  "anya-e0607n:524_0": "Niccappabuddha padumappiya sevinaṅgī;",
  "anya-e0607n:525_0": "Buddhappiyena ghana buddha guṇappiyena,",
  "anya-e0607n:526_0": "Therālinā racita pajjamadhuṃ pibantu.",
  "anya-e0607n:527_0": "104.",
  "anya-e0607n:528_0": "Itthaṃ rūpa guṇānukittanavasā taṃ taṃ hitā siṃ sato,",
  "anya-e0607n:529_0": "Vatthānussati vattita iha yathā sattesu mettā ca me;",
  "anya-e0607n:530_0": "Evaṃ tābhi bhavanta ruttara tarā vattantu tā bodhi me,",
  "anya-e0607n:531_0": "Saṃyogoca dhanehi santihi bhave kalyāna mittehi ca."
}