{
  "tha-ap108:0.1_0": "Therāpadāna",
  "tha-ap108:0.2_0": "Bhikkhadāyivagga",
  "tha-ap108:0.3_0": "6. Udakapūjakattheraapadāna",
  "tha-ap108:1.1_0": "“Suvaṇṇavaṇṇaṁ sambuddhaṁ,",
  "tha-ap108:1.2_0": "Gacchantaṁ anilañjase;",
  "tha-ap108:1.3_0": "Ghatāsanaṁva jalitaṁ,",
  "tha-ap108:1.4_0": "Ādittaṁva hutāsanaṁ.",
  "tha-ap108:2.1_0": "Pāṇinā udakaṁ gayha,",
  "tha-ap108:2.2_0": "ākāse ukkhipiṁ ahaṁ;",
  "tha-ap108:2.3_0": "Sampaṭicchi mahāvīro,",
  "tha-ap108:2.4_0": "buddho kāruṇiko isi.",
  "tha-ap108:3.1_0": "Antalikkhe ṭhito satthā,",
  "tha-ap108:3.2_0": "padumuttaranāmako;",
  "tha-ap108:3.3_0": "Mama saṅkappamaññāya,",
  "tha-ap108:3.4_0": "imaṁ gāthaṁ abhāsatha.",
  "tha-ap108:4.1_0": "‘Iminā dakadānena,",
  "tha-ap108:4.2_0": "pītiuppādanena ca;",
  "tha-ap108:4.3_0": "Kappasatasahassampi,",
  "tha-ap108:4.4_0": "duggatiṁ nupapajjati’.",
  "tha-ap108:5.1_0": "Tena kammena dvipadinda,",
  "tha-ap108:5.2_0": "lokajeṭṭha narāsabha;",
  "tha-ap108:5.3_0": "Pattomhi acalaṁ ṭhānaṁ,",
  "tha-ap108:5.4_0": "hitvā jayaparājayaṁ.",
  "tha-ap108:6.1_0": "Sahassarājanāmena,",
  "tha-ap108:6.2_0": "tayo te cakkavattino;",
  "tha-ap108:6.3_0": "Pañcasaṭṭhikappasate,",
  "tha-ap108:6.4_0": "cāturantā janādhipā.",
  "tha-ap108:7.1_0": "Paṭisambhidā catasso,",
  "tha-ap108:7.2_0": "…pe…",
  "tha-ap108:7.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap108:8.1_0": "Itthaṁ sudaṁ āyasmā udakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap108:9.1_0": "Udakapūjakattherassāpadānaṁ chaṭṭhaṁ."
}