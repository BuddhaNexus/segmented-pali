{
  "pv36:0.1_0": "Petavatthu",
  "pv36:0.2_0": "Mahāvagga",
  "pv36:0.3_0": "1. Ambasakkarapetavatthu",
  "pv36:1.1_0": "Vesālī nāma nagaratthi vajjīnaṁ,",
  "pv36:1.2_0": "Tattha ahu licchavi ambasakkaro;",
  "pv36:1.3_0": "Disvāna petaṁ nagarassa bāhiraṁ,",
  "pv36:1.4_0": "Tattheva pucchittha taṁ kāraṇatthiko.",
  "pv36:2.1_0": "“Seyyā nisajjā nayimassa atthi,",
  "pv36:2.2_0": "Abhikkamo natthi paṭikkamo ca;",
  "pv36:2.3_0": "Asitapītakhāyitavatthabhogā,",
  "pv36:2.4_0": "Paricārikā sāpi imassa natthi.",
  "pv36:3.1_0": "Ye ñātakā diṭṭhasutā suhajjā,",
  "pv36:3.2_0": "Anukampakā yassa ahesuṁ pubbe;",
  "pv36:3.3_0": "Daṭṭhumpi te dāni na taṁ labhanti,",
  "pv36:3.4_0": "Virājitatto hi janena tena.",
  "pv36:4.1_0": "Na oggatattassa bhavanti mittā,",
  "pv36:4.2_0": "Jahanti mittā vikalaṁ viditvā;",
  "pv36:4.3_0": "Atthañca disvā parivārayanti,",
  "pv36:4.4_0": "Bahū mittā uggatattassa honti.",
  "pv36:5.1_0": "Nihīnatto sabbabhogehi kiccho,",
  "pv36:5.2_0": "Sammakkhito samparibhinnagatto;",
  "pv36:5.3_0": "Ussāvabindūva palimpamāno,",
  "pv36:5.4_0": "Ajja suve jīvitassūparodho.",
  "pv36:6.1_0": "Etādisaṁ uttamakicchappattaṁ,",
  "pv36:6.2_0": "Uttāsitaṁ pucimandassa sūle;",
  "pv36:6.3_0": "‘Atha tvaṁ kena vaṇṇena vadesi yakkha,",
  "pv36:6.4_0": "Jīva bho jīvitameva seyyo’”ti.",
  "pv36:7.1_0": "“Sālohito esa ahosi mayhaṁ,",
  "pv36:7.2_0": "Ahaṁ sarāmi purimāya jātiyā;",
  "pv36:7.3_0": "Disvā ca me kāruññamahosi rāja,",
  "pv36:7.4_0": "Mā pāpadhammo nirayaṁ patāyaṁ.",
  "pv36:8.1_0": "Ito cuto licchavi esa poso,",
  "pv36:8.2_0": "Sattussadaṁ nirayaṁ ghorarūpaṁ;",
  "pv36:8.3_0": "Upapajjati dukkaṭakammakārī,",
  "pv36:8.4_0": "Mahābhitāpaṁ kaṭukaṁ bhayānakaṁ.",
  "pv36:9.1_0": "Anekabhāgena guṇena seyyo,",
  "pv36:9.2_0": "Ayameva sūlo nirayena tena;",
  "pv36:9.3_0": "Ekantadukkhaṁ kaṭukaṁ bhayānakaṁ,",
  "pv36:9.4_0": "Ekantatibbaṁ nirayaṁ patāyaṁ.",
  "pv36:10.1_0": "Idañca sutvā vacanaṁ mameso,",
  "pv36:10.2_0": "Dukkhūpanīto vijaheyya pāṇaṁ;",
  "pv36:10.3_0": "Tasmā ahaṁ santike na bhaṇāmi,",
  "pv36:10.4_0": "Mā me kato jīvitassūparodho”.",
  "pv36:11.1_0": "“Aññāto eso purisassa attho,",
  "pv36:11.2_0": "Aññampi icchāmase pucchituṁ tuvaṁ;",
  "pv36:11.3_0": "Okāsakammaṁ sace no karosi,",
  "pv36:11.4_0": "Pucchāma taṁ no na ca kujjhitabban”ti.",
  "pv36:12.1_0": "“Addhā paṭiññā me tadā ahu,",
  "pv36:12.2_0": "Nācikkhanā appasannassa hoti;",
  "pv36:12.3_0": "Akāmā saddheyyavacoti katvā,",
  "pv36:12.4_0": "Pucchassu maṁ kāmaṁ yathā visayhan”ti.",
  "pv36:13.1_0": "“Yaṁ kiñcahaṁ cakkhunā passissāmi,",
  "pv36:13.2_0": "Sabbampi tāhaṁ abhisaddaheyyaṁ;",
  "pv36:13.3_0": "Disvāva taṁ nopi ce saddaheyyaṁ,",
  "pv36:13.4_0": "Kareyyāsi me yakkha niyassakamman”ti.",
  "pv36:14.1_0": "“Saccappaṭiññā tava mesā hotu,",
  "pv36:14.2_0": "Sutvāna dhammaṁ labha suppasādaṁ;",
  "pv36:14.3_0": "Aññatthiko no ca paduṭṭhacitto,",
  "pv36:14.4_0": "Yaṁ te sutaṁ asutañcāpi dhammaṁ;",
  "pv36:14.5_0": "Sabbampi akkhissaṁ yathā pajānanti”.",
  "pv36:15.1_0": "“Setena assena alaṅkatena,",
  "pv36:15.2_0": "Upayāsi sūlāvutakassa santike;",
  "pv36:15.3_0": "Yānaṁ idaṁ abbhutaṁ dassaneyyaṁ,",
  "pv36:15.4_0": "Kissetaṁ kammassa ayaṁ vipāko”ti.",
  "pv36:16.1_0": "“Vesāliyā nagarassa majjhe,",
  "pv36:16.2_0": "Cikkhallamagge narakaṁ ahosi;",
  "pv36:16.3_0": "Gosīsamekāhaṁ pasannacitto,",
  "pv36:16.4_0": "Setaṁ gahetvā narakasmiṁ nikkhipiṁ.",
  "pv36:17.1_0": "Etasmiṁ pādāni patiṭṭhapetvā,",
  "pv36:17.2_0": "Mayañca aññe ca atikkamimhā;",
  "pv36:17.3_0": "Yānaṁ idaṁ abbhutaṁ dassaneyyaṁ,",
  "pv36:17.4_0": "Tasseva kammassa ayaṁ vipāko”ti.",
  "pv36:18.1_0": "“Vaṇṇo ca te sabbadisā pabhāsati,",
  "pv36:18.2_0": "Gandho ca te sabbadisā pavāyati;",
  "pv36:18.3_0": "Yakkhiddhipattosi mahānubhāvo,",
  "pv36:18.4_0": "Naggo cāsi kissa ayaṁ vipāko”ti.",
  "pv36:19.1_0": "“Akkodhano niccapasannacitto,",
  "pv36:19.2_0": "Saṇhāhi vācāhi janaṁ upemi;",
  "pv36:19.3_0": "Tasseva kammassa ayaṁ vipāko,",
  "pv36:19.4_0": "Dibbo me vaṇṇo satataṁ pabhāsati.",
  "pv36:20.1_0": "Yasañca kittiñca dhamme ṭhitānaṁ,",
  "pv36:20.2_0": "Disvāna mantemi pasannacitto;",
  "pv36:20.3_0": "Tasseva kammassa ayaṁ vipāko,",
  "pv36:20.4_0": "Dibbo me gandho satataṁ pavāyati.",
  "pv36:21.1_0": "Sahāyānaṁ titthasmiṁ nhāyantānaṁ,",
  "pv36:21.2_0": "Thale gahetvā nidahissa dussaṁ;",
  "pv36:21.3_0": "Khiḍḍatthiko no ca paduṭṭhacitto,",
  "pv36:21.4_0": "Tenamhi naggo kasirā ca vuttī”ti.",
  "pv36:22.1_0": "“Yo kīḷamāno pakaroti pāpaṁ,",
  "pv36:22.2_0": "Tassedisaṁ kammavipākamāhu;",
  "pv36:22.3_0": "Akīḷamāno pana yo karoti,",
  "pv36:22.4_0": "Kiṁ tassa kammassa vipākamāhū”ti.",
  "pv36:23.1_0": "“Ye duṭṭhasaṅkappamanā manussā,",
  "pv36:23.2_0": "Kāyena vācāya ca saṅkiliṭṭhā;",
  "pv36:23.3_0": "Kāyassa bhedā abhisamparāyaṁ,",
  "pv36:23.4_0": "Asaṁsayaṁ te nirayaṁ upenti.",
  "pv36:24.1_0": "Apare pana sugatimāsamānā,",
  "pv36:24.2_0": "Dāne ratā saṅgahitattabhāvā;",
  "pv36:24.3_0": "Kāyassa bhedā abhisamparāyaṁ,",
  "pv36:24.4_0": "Asaṁsayaṁ te sugatiṁ upentī”ti.",
  "pv36:25.1_0": "“Taṁ kinti jāneyyamahaṁ avecca,",
  "pv36:25.2_0": "Kalyāṇapāpassa ayaṁ vipāko;",
  "pv36:25.3_0": "Kiṁ vāhaṁ disvā abhisaddaheyyaṁ,",
  "pv36:25.4_0": "Ko vāpi maṁ saddahāpeyya etan”ti.",
  "pv36:26.1_0": "“Disvā ca sutvā abhisaddahassu,",
  "pv36:26.2_0": "Kalyāṇapāpassa ayaṁ vipāko;",
  "pv36:26.3_0": "Kalyāṇapāpe ubhaye asante,",
  "pv36:26.4_0": "Siyā nu sattā sugatā duggatā vā.",
  "pv36:27.1_0": "No cettha kammāni kareyyuṁ maccā,",
  "pv36:27.2_0": "Kalyāṇapāpāni manussaloke;",
  "pv36:27.3_0": "Nāhesuṁ sattā sugatā duggatā vā,",
  "pv36:27.4_0": "Hīnā paṇītā ca manussaloke.",
  "pv36:28.1_0": "Yasmā ca kammāni karonti maccā,",
  "pv36:28.2_0": "Kalyāṇapāpāni manussaloke;",
  "pv36:28.3_0": "Tasmā hi sattā sugatā duggatā vā,",
  "pv36:28.4_0": "Hīnā paṇītā ca manussaloke.",
  "pv36:29.1_0": "Dvayajja kammānaṁ vipākamāhu,",
  "pv36:29.2_0": "Sukhassa dukkhassa ca vedanīyaṁ;",
  "pv36:29.3_0": "Tā devatāyo paricārayanti,",
  "pv36:29.4_0": "Paccanti bālā dvayataṁ apassino.",
  "pv36:30.1_0": "Na matthi kammāni sayaṅkatāni,",
  "pv36:30.2_0": "Datvāpi me natthi yo ādiseyya;",
  "pv36:30.3_0": "Acchādanaṁ sayanamathannapānaṁ,",
  "pv36:30.4_0": "Tenamhi naggo kasirā ca vuttī”ti.",
  "pv36:31.1_0": "“Siyā nu kho kāraṇaṁ kiñci yakkha,",
  "pv36:31.2_0": "Acchādanaṁ yena tuvaṁ labhetha;",
  "pv36:31.3_0": "Ācikkha me tvaṁ yadatthi hetu,",
  "pv36:31.4_0": "Saddhāyikaṁ hetuvaco suṇomā”ti.",
  "pv36:32.1_0": "“Kappitako nāma idhatthi bhikkhu,",
  "pv36:32.2_0": "Jhāyī susīlo arahā vimutto;",
  "pv36:32.3_0": "Guttindriyo saṁvutapātimokkho,",
  "pv36:32.4_0": "Sītibhūto uttamadiṭṭhipatto.",
  "pv36:33.1_0": "Sakhilo vadaññū suvaco sumukho,",
  "pv36:33.2_0": "Svāgamo suppaṭimuttako ca;",
  "pv36:33.3_0": "Puññassa khettaṁ araṇavihārī,",
  "pv36:33.4_0": "Devamanussānañca dakkhiṇeyyo.",
  "pv36:34.1_0": "Santo vidhūmo anīgho nirāso,",
  "pv36:34.2_0": "Mutto visallo amamo avaṅko;",
  "pv36:34.3_0": "Nirūpadhī sabbapapañcakhīṇo,",
  "pv36:34.4_0": "Tisso vijjā anuppatto jutimā.",
  "pv36:35.1_0": "Appaññāto disvāpi na ca sujāno,",
  "pv36:35.2_0": "Munīti naṁ vajjisu voharanti;",
  "pv36:35.3_0": "Jānanti taṁ yakkhabhūtā anejaṁ,",
  "pv36:35.4_0": "Kalyāṇadhammaṁ vicarantaṁ loke.",
  "pv36:36.1_0": "Tassa tuvaṁ ekayugaṁ duve vā,",
  "pv36:36.2_0": "Mamuddisitvāna sace dadetha;",
  "pv36:36.3_0": "Paṭiggahītāni ca tāni assu,",
  "pv36:36.4_0": "Mamañca passetha sannaddhadussan”ti.",
  "pv36:37.1_0": "“Kasmiṁ padese samaṇaṁ vasantaṁ,",
  "pv36:37.2_0": "Gantvāna passemu mayaṁ idāni;",
  "pv36:37.3_0": "Yo majja kaṅkhaṁ vicikicchitañca,",
  "pv36:37.4_0": "Diṭṭhīvisūkāni vinodayeyyā”ti.",
  "pv36:38.1_0": "“Eso nisinno kapinaccanāyaṁ,",
  "pv36:38.2_0": "Parivārito devatāhi bahūhi;",
  "pv36:38.3_0": "Dhammiṁ kathaṁ bhāsati saccanāmo,",
  "pv36:38.4_0": "Sakasmimācerake appamatto”ti.",
  "pv36:39.1_0": "“Tathāhaṁ kassāmi gantvā idāni,",
  "pv36:39.2_0": "Acchādayissaṁ samaṇaṁ yugena;",
  "pv36:39.3_0": "Paṭiggahitāni ca tāni assu,",
  "pv36:39.4_0": "Tuvañca passemu sannaddhadussan”ti.",
  "pv36:40.1_0": "“Mā akkhaṇe pabbajitaṁ upāgami,",
  "pv36:40.2_0": "Sādhu vo licchavi nesa dhammo;",
  "pv36:40.3_0": "Tato ca kāle upasaṅkamitvā,",
  "pv36:40.4_0": "Tattheva passāhi raho nisinnan”ti.",
  "pv36:41.1_0": "Tathāti vatvā agamāsi tattha,",
  "pv36:41.2_0": "Parivārito dāsagaṇena licchavi;",
  "pv36:41.3_0": "So taṁ nagaraṁ upasaṅkamitvā,",
  "pv36:41.4_0": "Vāsūpagacchittha sake nivesane.",
  "pv36:42.1_0": "Tato ca kāle gihikiccāni katvā,",
  "pv36:42.2_0": "Nhatvā pivitvā ca khaṇaṁ labhitvā;",
  "pv36:42.3_0": "Viceyya peḷāto ca yugāni aṭṭha,",
  "pv36:42.4_0": "Gāhāpayī dāsagaṇena licchavi.",
  "pv36:43.1_0": "So taṁ padesaṁ upasaṅkamitvā,",
  "pv36:43.2_0": "Taṁ addasa samaṇaṁ santacittaṁ;",
  "pv36:43.3_0": "Paṭikkantaṁ gocarato nivattaṁ,",
  "pv36:43.4_0": "Sītibhūtaṁ rukkhamūle nisinnaṁ.",
  "pv36:44.1_0": "Tamenamavoca upasaṅkamitvā,",
  "pv36:44.2_0": "Appābādhaṁ phāsuvihārañca pucchi;",
  "pv36:44.3_0": "“Vesāliyaṁ licchavihaṁ bhadante,",
  "pv36:44.4_0": "Jānanti maṁ licchavi ambasakkaro.",
  "pv36:45.1_0": "Imāni me aṭṭha yugā subhāni,",
  "pv36:45.2_0": "Paṭigaṇha bhante padadāmi tuyhaṁ;",
  "pv36:45.3_0": "Teneva atthena idhāgatosmi,",
  "pv36:45.4_0": "Yathā ahaṁ attamano bhaveyyan”ti.",
  "pv36:46.1_0": "“Dūratova samaṇabrāhmaṇā ca,",
  "pv36:46.2_0": "Nivesanaṁ te parivajjayanti;",
  "pv36:46.3_0": "Pattāni bhijjanti ca te nivesane,",
  "pv36:46.4_0": "Saṅghāṭiyo cāpi vidālayanti.",
  "pv36:47.1_0": "Athāpare pādakuṭhārikāhi,",
  "pv36:47.2_0": "Avaṁsirā samaṇā pātayanti;",
  "pv36:47.3_0": "Etādisaṁ pabbajitā vihesaṁ,",
  "pv36:47.4_0": "Tayā kataṁ samaṇā pāpuṇanti.",
  "pv36:48.1_0": "Tiṇena telampi na tvaṁ adāsi,",
  "pv36:48.2_0": "Muḷhassa maggampi na pāvadāsi;",
  "pv36:48.3_0": "Andhassa daṇḍaṁ sayamādiyāsi,",
  "pv36:48.4_0": "Etādiso kadariyo asaṁvuto tuvaṁ;",
  "pv36:48.5_0": "Atha tvaṁ kena vaṇṇena kimeva disvā,",
  "pv36:48.6_0": "Amhehi saha saṁvibhāgaṁ karosī”ti.",
  "pv36:49.1_0": "“Paccemi bhante yaṁ tvaṁ vadesi,",
  "pv36:49.2_0": "Vihesayiṁ samaṇe brāhmaṇe ca;",
  "pv36:49.3_0": "Khiḍḍatthiko no ca paduṭṭhacitto,",
  "pv36:49.4_0": "Etampi me dukkaṭameva bhante.",
  "pv36:50.1_0": "Khiḍḍāya yakkho pasavitvā pāpaṁ,",
  "pv36:50.2_0": "Vedeti dukkhaṁ asamattabhogī;",
  "pv36:50.3_0": "Daharo yuvā nagganiyassa bhāgī,",
  "pv36:50.4_0": "Kiṁ su tato dukkhatarassa hoti.",
  "pv36:51.1_0": "Taṁ disvā saṁvegamalatthaṁ bhante,",
  "pv36:51.2_0": "Tappaccayā vāpi dadāmi dānaṁ;",
  "pv36:51.3_0": "Paṭigaṇha bhante vatthayugāni aṭṭha,",
  "pv36:51.4_0": "Yakkhassimā gacchantu dakkhiṇāyo”ti.",
  "pv36:52.1_0": "“Addhā hi dānaṁ bahudhā pasatthaṁ,",
  "pv36:52.2_0": "Dadato ca te akkhayadhammamatthu;",
  "pv36:52.3_0": "Paṭigaṇhāmi te vatthayugāni aṭṭha,",
  "pv36:52.4_0": "Yakkhassimā gacchantu dakkhiṇāyo”ti.",
  "pv36:53.1_0": "Tato hi so ācamayitvā licchavi,",
  "pv36:53.2_0": "Therassa datvāna yugāni aṭṭha;",
  "pv36:53.3_0": "Paṭiggahitāni ca tāni assu,",
  "pv36:53.4_0": "Yakkhañca passetha sannaddhadussaṁ.",
  "pv36:54.1_0": "Tamaddasā candanasāralittaṁ,",
  "pv36:54.2_0": "Ājaññamārūḷhamuḷāravaṇṇaṁ;",
  "pv36:54.3_0": "Alaṅkataṁ sādhunivatthadussaṁ,",
  "pv36:54.4_0": "Parivāritaṁ yakkhamahiddhipattaṁ.",
  "pv36:55.1_0": "So taṁ disvā attamano udaggo,",
  "pv36:55.2_0": "Pahaṭṭhacitto ca subhaggarūpo;",
  "pv36:55.3_0": "Kammañca disvāna mahāvipākaṁ,",
  "pv36:55.4_0": "Sandiṭṭhikaṁ cakkhunā sacchikatvā.",
  "pv36:56.1_0": "Tamenamavoca upasaṅkamitvā,",
  "pv36:56.2_0": "“Dassāmi dānaṁ samaṇabrāhmaṇānaṁ;",
  "pv36:56.3_0": "Na cāpi me kiñci adeyyamatthi,",
  "pv36:56.4_0": "Tuvañca me yakkha bahūpakāro”ti.",
  "pv36:57.1_0": "“Tuvañca me licchavi ekadesaṁ,",
  "pv36:57.2_0": "Adāsi dānāni amoghametaṁ;",
  "pv36:57.3_0": "Svāhaṁ karissāmi tayāva sakkhiṁ,",
  "pv36:57.4_0": "Amānuso mānusakena saddhin”ti.",
  "pv36:58.1_0": "“Gatī ca bandhū ca parāyaṇañca,",
  "pv36:58.2_0": "Mitto mamāsi atha devatā me;",
  "pv36:58.3_0": "Yācāmi taṁ pañjaliko bhavitvā,",
  "pv36:58.4_0": "Icchāmi taṁ yakkha punāpi daṭṭhun”ti.",
  "pv36:59.1_0": "“Sace tuvaṁ assaddho bhavissasi,",
  "pv36:59.2_0": "Kadariyarūpo vippaṭipannacitto;",
  "pv36:59.3_0": "Tvaṁ neva maṁ lacchasi dassanāya,",
  "pv36:59.4_0": "Disvā ca taṁ nopi ca ālapissaṁ.",
  "pv36:60.1_0": "Sace pana tvaṁ bhavissasi dhammagāravo,",
  "pv36:60.2_0": "Dāne rato saṅgahitattabhāvo;",
  "pv36:60.3_0": "Opānabhūto samaṇabrāhmaṇānaṁ,",
  "pv36:60.4_0": "Evaṁ mamaṁ lacchasi dassanāya.",
  "pv36:61.1_0": "Disvā ca taṁ ālapissaṁ bhadante,",
  "pv36:61.2_0": "Imañca sūlato lahuṁ pamuñca;",
  "pv36:61.3_0": "Yatonidānaṁ akarimha sakkhiṁ,",
  "pv36:61.4_0": "Maññāmi sūlāvutakassa kāraṇā.",
  "pv36:62.1_0": "Te aññamaññaṁ akarimha sakkhiṁ,",
  "pv36:62.2_0": "Ayañca sūlato lahuṁ pamutto;",
  "pv36:62.3_0": "Sakkacca dhammāni samācaranto,",
  "pv36:62.4_0": "Mucceyya so nirayā ca tamhā;",
  "pv36:62.5_0": "Kammaṁ siyā aññatra vedanīyaṁ.",
  "pv36:63.1_0": "Kappitakañca upasaṅkamitvā,",
  "pv36:63.2_0": "Teneva saha saṁvibhajitvā kāle;",
  "pv36:63.3_0": "Sayaṁ mukhenūpanisajja puccha,",
  "pv36:63.4_0": "So te akkhissati etamatthaṁ.",
  "pv36:64.1_0": "Tameva bhikkhuṁ upasaṅkamitvā,",
  "pv36:64.2_0": "Pucchassu aññatthiko no ca paduṭṭhacitto;",
  "pv36:64.3_0": "So te sutaṁ asutañcāpi dhammaṁ,",
  "pv36:64.4_0": "Sabbampi akkhissati yathā pajānan”ti.",
  "pv36:65.1_0": "So tattha rahassaṁ samullapitvā,",
  "pv36:65.2_0": "Sakkhiṁ karitvāna amānusena;",
  "pv36:65.3_0": "Pakkāmi so licchavīnaṁ sakāsaṁ,",
  "pv36:65.4_0": "Atha bravi parisaṁ sannisinnaṁ.",
  "pv36:66.1_0": "“Suṇantu bhonto mama ekavākyaṁ,",
  "pv36:66.2_0": "Varaṁ varissaṁ labhissāmi atthaṁ;",
  "pv36:66.3_0": "Sūlāvuto puriso luddakammo,",
  "pv36:66.4_0": "Paṇihitadaṇḍo anusattarūpo.",
  "pv36:67.1_0": "Ettāvatā vīsatirattimattā,",
  "pv36:67.2_0": "Yato āvuto neva jīvati na mato;",
  "pv36:67.3_0": "Tāhaṁ mocayissāmi dāni,",
  "pv36:67.4_0": "Yathāmatiṁ anujānātu saṅgho”ti.",
  "pv36:68.1_0": "“Etañca aññañca lahuṁ pamuñca,",
  "pv36:68.2_0": "Ko taṁ vadetha tathā karontaṁ;",
  "pv36:68.3_0": "Yathā pajānāsi tathā karohi,",
  "pv36:68.4_0": "Yathāmatiṁ anujānāti saṅgho”ti.",
  "pv36:69.1_0": "So taṁ padesaṁ upasaṅkamitvā,",
  "pv36:69.2_0": "Sūlāvutaṁ mocayi khippameva;",
  "pv36:69.3_0": "“Mā bhāyi sammā”ti ca taṁ avoca,",
  "pv36:69.4_0": "Tikicchakānañca upaṭṭhapesi.",
  "pv36:70.1_0": "“Kappitakañca upasaṅkamitvā,",
  "pv36:70.2_0": "Teneva saha saṁvibhajitvā kāle;",
  "pv36:70.3_0": "Sayaṁ mukhenūpanisajja licchavi,",
  "pv36:70.4_0": "Tatheva pucchittha naṁ kāraṇatthiko.",
  "pv36:71.1_0": "Sūlāvuto puriso luddakammo,",
  "pv36:71.2_0": "Paṇihitadaṇḍo anusattarūpo;",
  "pv36:71.3_0": "Ettāvatā vīsatirattimattā,",
  "pv36:71.4_0": "Yato āvuto neva jīvati na mato.",
  "pv36:72.1_0": "So mocito gantvā mayā idāni,",
  "pv36:72.2_0": "Etassa yakkhassa vaco hi bhante;",
  "pv36:72.3_0": "Siyā nu kho kāraṇaṁ kiñcideva,",
  "pv36:72.4_0": "Yena so nirayaṁ no vajeyya.",
  "pv36:73.1_0": "Ācikkha bhante yadi atthi hetu,",
  "pv36:73.2_0": "Saddhāyikaṁ hetuvaco suṇoma;",
  "pv36:73.3_0": "Na tesaṁ kammānaṁ vināsamatthi,",
  "pv36:73.4_0": "Avedayitvā idha byantibhāvo”ti.",
  "pv36:74.1_0": "“Sace sa dhammāni samācareyya,",
  "pv36:74.2_0": "Sakkacca rattindivamappamatto;",
  "pv36:74.3_0": "Mucceyya so nirayā ca tamhā,",
  "pv36:74.4_0": "Kammaṁ siyā aññatra vedanīyan”ti.",
  "pv36:75.1_0": "“Aññāto eso purisassa attho,",
  "pv36:75.2_0": "Mamampi dāni anukampa bhante;",
  "pv36:75.3_0": "Anusāsa maṁ ovada bhūripañña,",
  "pv36:75.4_0": "Yathā ahaṁ no nirayaṁ vajeyyan”ti.",
  "pv36:76.1_0": "“Ajjeva buddhaṁ saraṇaṁ upehi,",
  "pv36:76.2_0": "Dhammañca saṅghañca pasannacitto;",
  "pv36:76.3_0": "Tatheva sikkhāya padāni pañca,",
  "pv36:76.4_0": "Akhaṇḍaphullāni samādiyassu.",
  "pv36:77.1_0": "Pāṇātipātā viramassu khippaṁ,",
  "pv36:77.2_0": "Loke adinnaṁ parivajjayassu;",
  "pv36:77.3_0": "Amajjapo mā ca musā abhāṇī,",
  "pv36:77.4_0": "Sakena dārena ca hohi tuṭṭho;",
  "pv36:77.5_0": "Imañca ariyaṁ aṭṭhaṅgavarenupetaṁ,",
  "pv36:77.6_0": "Samādiyāhi kusalaṁ sukhudrayaṁ.",
  "pv36:78.1_0": "Cīvaraṁ piṇḍapātañca,",
  "pv36:78.2_0": "paccayaṁ sayanāsanaṁ;",
  "pv36:78.3_0": "Annaṁ pānaṁ khādanīyaṁ,",
  "pv36:78.4_0": "vatthasenāsanāni ca;",
  "pv36:78.5_0": "Dadāhi ujubhūtesu,",
  "pv36:78.6_0": "vippasannena cetasā.",
  "pv36:79.1_0": "Bhikkhūpi sīlasampanne,",
  "pv36:79.2_0": "vītarāge bahussute;",
  "pv36:79.3_0": "Tappehi annapānena,",
  "pv36:79.4_0": "sadā puññaṁ pavaḍḍhati.",
  "pv36:80.1_0": "Evañca dhammāni samācaranto,",
  "pv36:80.2_0": "Sakkacca rattindivamappamatto;",
  "pv36:80.3_0": "Muñca tuvaṁ nirayā ca tamhā,",
  "pv36:80.4_0": "Kammaṁ siyā aññatra vedanīyan”ti.",
  "pv36:81.1_0": "“Ajjeva buddhaṁ saraṇaṁ upemi,",
  "pv36:81.2_0": "Dhammañca saṅghañca pasannacitto;",
  "pv36:81.3_0": "Tatheva sikkhāya padāni pañca,",
  "pv36:81.4_0": "Akhaṇḍaphullāni samādiyāmi.",
  "pv36:82.1_0": "Pāṇātipātā viramāmi khippaṁ,",
  "pv36:82.2_0": "Loke adinnaṁ parivajjayāmi;",
  "pv36:82.3_0": "Amajjapo no ca musā bhaṇāmi,",
  "pv36:82.4_0": "Sakena dārena ca homi tuṭṭho;",
  "pv36:82.5_0": "Imañca ariyaṁ aṭṭhaṅgavarenupetaṁ,",
  "pv36:82.6_0": "Samādiyāmi kusalaṁ sukhudrayaṁ.",
  "pv36:83.1_0": "Cīvaraṁ piṇḍapātañca,",
  "pv36:83.2_0": "paccayaṁ sayanāsanaṁ;",
  "pv36:83.3_0": "Annaṁ pānaṁ khādanīyaṁ,",
  "pv36:83.4_0": "vatthasenāsanāni ca.",
  "pv36:84.1_0": "Bhikkhū ca sīlasampanne,",
  "pv36:84.2_0": "vītarāge bahussute;",
  "pv36:84.3_0": "Dadāmi na vikampāmi,",
  "pv36:84.4_0": "buddhānaṁ sāsane rato”ti.",
  "pv36:85.1_0": "Etādiso licchavi ambasakkaro,",
  "pv36:85.2_0": "Vesāliyaṁ aññataro upāsako;",
  "pv36:85.3_0": "Saddho mudū kārakaro ca bhikkhu,",
  "pv36:85.4_0": "Saṅghañca sakkacca tadā upaṭṭhahi.",
  "pv36:86.1_0": "Sūlāvuto ca arogo hutvā,",
  "pv36:86.2_0": "Serī sukhī pabbajjaṁ upāgami;",
  "pv36:86.3_0": "Bhikkhuñca āgamma kappitakuttamaṁ,",
  "pv36:86.4_0": "Ubhopi sāmaññaphalāni ajjhaguṁ.",
  "pv36:87.1_0": "Etādisā sappurisāna sevanā,",
  "pv36:87.2_0": "Mahapphalā hoti sataṁ vijānataṁ;",
  "pv36:87.3_0": "Sūlāvuto aggaphalaṁ aphassayi,",
  "pv36:87.4_0": "Phalaṁ kaniṭṭhaṁ pana ambasakkaroti.",
  "pv36:88.1_0": "Ambasakkarapetavatthu paṭhamaṁ."
}