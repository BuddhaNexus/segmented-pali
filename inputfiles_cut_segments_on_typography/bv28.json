{
  "bv28:0.1_0": "Buddhavaṁsa",
  "bv28:0.2_0": "28. Buddhapakiṇṇakakaṇḍa",
  "bv28:1.1_0": "Aparimeyyito kappe,",
  "bv28:1.2_0": "caturo āsuṁ vināyakā;",
  "bv28:1.3_0": "Taṇhaṅkaro medhaṅkaro,",
  "bv28:1.4_0": "athopi saraṇaṅkaro;",
  "bv28:1.5_0": "Dīpaṅkaro ca sambuddho,",
  "bv28:1.6_0": "ekakappamhi te jinā.",
  "bv28:2.1_0": "Dīpaṅkarassa aparena,",
  "bv28:2.2_0": "koṇḍañño nāma nāyako;",
  "bv28:2.3_0": "Ekova ekakappamhi,",
  "bv28:2.4_0": "tāresi janataṁ bahuṁ.",
  "bv28:3.1_0": "Dīpaṅkarassa bhagavato,",
  "bv28:3.2_0": "koṇḍaññassa ca satthuno;",
  "bv28:3.3_0": "Etesaṁ antarā kappā,",
  "bv28:3.4_0": "gaṇanāto asaṅkhiyā.",
  "bv28:4.1_0": "Koṇḍaññassa aparena,",
  "bv28:4.2_0": "maṅgalo nāma nāyako;",
  "bv28:4.3_0": "Tesampi antarā kappā,",
  "bv28:4.4_0": "gaṇanāto asaṅkhiyā.",
  "bv28:5.1_0": "Maṅgalo ca sumano ca,",
  "bv28:5.2_0": "revato sobhito muni;",
  "bv28:5.3_0": "Tepi buddhā ekakappe,",
  "bv28:5.4_0": "cakkhumanto pabhaṅkarā.",
  "bv28:6.1_0": "Sobhitassa aparena,",
  "bv28:6.2_0": "anomadassī mahāyaso;",
  "bv28:6.3_0": "Tesampi antarā kappā,",
  "bv28:6.4_0": "gaṇanāto asaṅkhiyā.",
  "bv28:7.1_0": "Anomadassī padumo,",
  "bv28:7.2_0": "nārado cāpi nāyako;",
  "bv28:7.3_0": "Tepi buddhā ekakappe,",
  "bv28:7.4_0": "tamantakārakā munī.",
  "bv28:8.1_0": "Nāradassa aparena,",
  "bv28:8.2_0": "Padumuttaro nāma nāyako;",
  "bv28:8.3_0": "Ekakappamhi uppanno,",
  "bv28:8.4_0": "Tāresi janataṁ bahuṁ.",
  "bv28:9.1_0": "Nāradassa bhagavato,",
  "bv28:9.2_0": "padumuttarassa satthuno;",
  "bv28:9.3_0": "Tesampi antarā kappā,",
  "bv28:9.4_0": "gaṇanāto asaṅkhiyā.",
  "bv28:10.1_0": "Kappasatasahassamhi,",
  "bv28:10.2_0": "eko āsi mahāmuni;",
  "bv28:10.3_0": "Padumuttaro lokavidū,",
  "bv28:10.4_0": "āhutīnaṁ paṭiggaho.",
  "bv28:11.1_0": "Tiṁsakappasahassamhi,",
  "bv28:11.2_0": "duve āsuṁ vināyakā;",
  "bv28:11.3_0": "Sumedho ca sujāto ca,",
  "bv28:11.4_0": "orato padumuttarā.",
  "bv28:12.1_0": "Aṭṭhārase kappasate,",
  "bv28:12.2_0": "tayo āsuṁ vināyakā;",
  "bv28:12.3_0": "Piyadassī atthadassī,",
  "bv28:12.4_0": "dhammadassī ca nāyakā.",
  "bv28:13.1_0": "Orato ca sujātassa,",
  "bv28:13.2_0": "sambuddhā dvipaduttamā;",
  "bv28:13.3_0": "Ekakappamhi te buddhā,",
  "bv28:13.4_0": "loke appaṭipuggalā.",
  "bv28:14.1_0": "Catunnavutito kappe,",
  "bv28:14.2_0": "eko āsi mahāmuni;",
  "bv28:14.3_0": "Siddhattho so lokavidū,",
  "bv28:14.4_0": "sallakatto anuttaro.",
  "bv28:15.1_0": "Dvenavute ito kappe,",
  "bv28:15.2_0": "duve āsuṁ vināyakā;",
  "bv28:15.3_0": "Tisso phusso ca sambuddhā,",
  "bv28:15.4_0": "asamā appaṭipuggalā.",
  "bv28:16.1_0": "Ekanavutito kappe,",
  "bv28:16.2_0": "vipassī nāma nāyako;",
  "bv28:16.3_0": "Sopi buddho kāruṇiko,",
  "bv28:16.4_0": "satte mocesi bandhanā.",
  "bv28:17.1_0": "Ekatiṁse ito kappe,",
  "bv28:17.2_0": "duve āsuṁ vināyakā;",
  "bv28:17.3_0": "Sikhī ca vessabhū ceva,",
  "bv28:17.4_0": "asamā appaṭipuggalā.",
  "bv28:18.1_0": "Imamhi bhaddake kappe,",
  "bv28:18.2_0": "tayo āsuṁ vināyakā;",
  "bv28:18.3_0": "Kakusandho koṇāgamano,",
  "bv28:18.4_0": "kassapo cāpi nāyako.",
  "bv28:19.1_0": "Ahametarahi sambuddho,",
  "bv28:19.2_0": "metteyyo cāpi hessati;",
  "bv28:19.3_0": "Etepime pañca buddhā,",
  "bv28:19.4_0": "dhīrā lokānukampakā.",
  "bv28:20.1_0": "Etesaṁ dhammarājūnaṁ,",
  "bv28:20.2_0": "Aññesaṁnekakoṭinaṁ;",
  "bv28:20.3_0": "Ācikkhitvāna taṁ maggaṁ,",
  "bv28:20.4_0": "Nibbutā te sasāvakāti.",
  "bv28:21.1_0": "Buddhapakiṇṇakakaṇḍaṁ niṭṭhitaṁ."
}