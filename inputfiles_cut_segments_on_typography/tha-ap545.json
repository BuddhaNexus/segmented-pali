{
  "tha-ap545:0.1_0": "Therāpadāna",
  "tha-ap545:0.2_0": "Bhaddiyavagga",
  "tha-ap545:0.3_0": "3. Sīvalittheraapadāna",
  "tha-ap545:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap545:1.2_0": "sabbadhammesu cakkhumā;",
  "tha-ap545:1.3_0": "Ito satasahassamhi,",
  "tha-ap545:1.4_0": "kappe uppajji nāyako.",
  "tha-ap545:2.1_0": "Sīlaṁ tassa asaṅkheyyaṁ,",
  "tha-ap545:2.2_0": "samādhi vajirūpamo;",
  "tha-ap545:2.3_0": "Asaṅkheyyaṁ ñāṇavaraṁ,",
  "tha-ap545:2.4_0": "vimutti ca anopamā.",
  "tha-ap545:3.1_0": "Manujāmaranāgānaṁ,",
  "tha-ap545:3.2_0": "brahmānañca samāgame;",
  "tha-ap545:3.3_0": "Samaṇabrāhmaṇākiṇṇe,",
  "tha-ap545:3.4_0": "dhammaṁ desesi nāyako.",
  "tha-ap545:4.1_0": "Sasāvakaṁ mahālābhiṁ,",
  "tha-ap545:4.2_0": "puññavantaṁ jutindharaṁ;",
  "tha-ap545:4.3_0": "Ṭhapesi etadaggamhi,",
  "tha-ap545:4.4_0": "parisāsu visārado.",
  "tha-ap545:5.1_0": "Tadāhaṁ khattiyo āsiṁ,",
  "tha-ap545:5.2_0": "nagare haṁsasavhaye;",
  "tha-ap545:5.3_0": "Sutvā jinassa taṁ vākyaṁ,",
  "tha-ap545:5.4_0": "sāvakassa guṇaṁ bahuṁ.",
  "tha-ap545:6.1_0": "Nimantayitvā sattāhaṁ,",
  "tha-ap545:6.2_0": "bhojayitvā sasāvakaṁ;",
  "tha-ap545:6.3_0": "Mahādānaṁ daditvāna,",
  "tha-ap545:6.4_0": "taṁ ṭhānamabhipatthayiṁ.",
  "tha-ap545:7.1_0": "Tadā maṁ vinataṁ pāde,",
  "tha-ap545:7.2_0": "disvāna purisāsabho;",
  "tha-ap545:7.3_0": "Sarena mahatā vīro,",
  "tha-ap545:7.4_0": "idaṁ vacanamabravi.",
  "tha-ap545:8.1_0": "‘Tato jinassa vacanaṁ,",
  "tha-ap545:8.2_0": "sotukāmā mahājanā;",
  "tha-ap545:8.3_0": "Devadānavagandhabbā,",
  "tha-ap545:8.4_0": "brahmāno ca mahiddhikā’.",
  "tha-ap545:9.1_0": "Samaṇabrāhmaṇā ceva,",
  "tha-ap545:9.2_0": "namassiṁsu katañjalī;",
  "tha-ap545:9.3_0": "‘Namo te purisājañña,",
  "tha-ap545:9.4_0": "namo te purisuttama.",
  "tha-ap545:10.1_0": "Khattiyena mahādānaṁ,",
  "tha-ap545:10.2_0": "dinnaṁ sattāhikampi vo;",
  "tha-ap545:10.3_0": "Sotukāmā phalaṁ tassa,",
  "tha-ap545:10.4_0": "byākarohi mahāmune’.",
  "tha-ap545:11.1_0": "Tato avoca bhagavā,",
  "tha-ap545:11.2_0": "‘suṇātha mama bhāsitaṁ;",
  "tha-ap545:11.3_0": "Appameyyamhi buddhamhi,",
  "tha-ap545:11.4_0": "sasaṅghamhi patiṭṭhitā.",
  "tha-ap545:12.1_0": "Dakkhiṇā tāya ko vattā,",
  "tha-ap545:12.2_0": "appameyyaphalā hi sā;",
  "tha-ap545:12.3_0": "Api ce sa mahābhogo,",
  "tha-ap545:12.4_0": "ṭhānaṁ pattheti uttamaṁ.",
  "tha-ap545:13.1_0": "Lābhī vipulalābhānaṁ,",
  "tha-ap545:13.2_0": "yathā bhikkhu sudassano;",
  "tha-ap545:13.3_0": "Tathāhampi bhaveyyanti,",
  "tha-ap545:13.4_0": "lacchase taṁ anāgate.",
  "tha-ap545:14.1_0": "Satasahassito kappe,",
  "tha-ap545:14.2_0": "okkākakulasambhavo;",
  "tha-ap545:14.3_0": "Gotamo nāma gottena,",
  "tha-ap545:14.4_0": "satthā loke bhavissati.",
  "tha-ap545:15.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap545:15.2_0": "oraso dhammanimmito;",
  "tha-ap545:15.3_0": "Sīvali nāma nāmena,",
  "tha-ap545:15.4_0": "hessati satthu sāvako’.",
  "tha-ap545:16.1_0": "Tena kammena sukatena,",
  "tha-ap545:16.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap545:16.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap545:16.4_0": "tāvatiṁsūpago ahaṁ.",
  "tha-ap545:17.1_0": "Ekanavutito kappe,",
  "tha-ap545:17.2_0": "vipassī lokanāyako;",
  "tha-ap545:17.3_0": "Uppajji cārudassano,",
  "tha-ap545:17.4_0": "sabbadhammavipassako.",
  "tha-ap545:18.1_0": "Tadāhaṁ bandhumatiyaṁ,",
  "tha-ap545:18.2_0": "kulassaññatarassa ca;",
  "tha-ap545:18.3_0": "Dayito passito ceva,",
  "tha-ap545:18.4_0": "āsiṁ kammantavāvaṭo.",
  "tha-ap545:19.1_0": "Tadā aññataro pūgo,",
  "tha-ap545:19.2_0": "vipassissa mahesino;",
  "tha-ap545:19.3_0": "Parivesaṁ akārayi,",
  "tha-ap545:19.4_0": "mahantamativissutaṁ.",
  "tha-ap545:20.1_0": "Niṭṭhite ca mahādāne,",
  "tha-ap545:20.2_0": "daduṁ khajjakasañhitaṁ;",
  "tha-ap545:20.3_0": "Navaṁ dadhiṁ madhuñceva,",
  "tha-ap545:20.4_0": "vicinaṁ neva addasuṁ.",
  "tha-ap545:21.1_0": "Tadāhaṁ taṁ gahetvāna,",
  "tha-ap545:21.2_0": "navaṁ dadhiṁ madhumpi ca;",
  "tha-ap545:21.3_0": "Kammassāmigharaṁ gacchiṁ,",
  "tha-ap545:21.4_0": "tamesantā mamaddasuṁ.",
  "tha-ap545:22.1_0": "Sahassamapi datvāna,",
  "tha-ap545:22.2_0": "nālabhiṁsu ca taṁ dvayaṁ;",
  "tha-ap545:22.3_0": "Tatohaṁ evaṁ cintesiṁ,",
  "tha-ap545:22.4_0": "‘netaṁ hessati orakaṁ.",
  "tha-ap545:23.1_0": "Yathā ime janā sabbe,",
  "tha-ap545:23.2_0": "sakkaronti tathāgataṁ;",
  "tha-ap545:23.3_0": "Ahampi kāraṁ kassāmi,",
  "tha-ap545:23.4_0": "sasaṅghe lokanāyake’.",
  "tha-ap545:24.1_0": "Tadāhamevaṁ cintetvā,",
  "tha-ap545:24.2_0": "dadhiṁ madhuñca ekato;",
  "tha-ap545:24.3_0": "Madditvā lokanāthassa,",
  "tha-ap545:24.4_0": "sasaṅghassa adāsahaṁ.",
  "tha-ap545:25.1_0": "Tena kammena sukatena,",
  "tha-ap545:25.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap545:25.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap545:25.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap545:26.1_0": "Punāhaṁ bārāṇasiyaṁ,",
  "tha-ap545:26.2_0": "rājā hutvā mahāyaso;",
  "tha-ap545:26.3_0": "Sattukassa tadā duṭṭho,",
  "tha-ap545:26.4_0": "dvārarodhamakārayiṁ.",
  "tha-ap545:27.1_0": "Tadā tapassino ruddhā,",
  "tha-ap545:27.2_0": "ekāhaṁ rakkhitā ahuṁ;",
  "tha-ap545:27.3_0": "Tato tassa vipākena,",
  "tha-ap545:27.4_0": "pāpatiṁ nirayaṁ bhusaṁ.",
  "tha-ap545:28.1_0": "Pacchime ca bhave dāni,",
  "tha-ap545:28.2_0": "jātohaṁ koliye pure;",
  "tha-ap545:28.3_0": "Suppavāsā ca me mātā,",
  "tha-ap545:28.4_0": "mahāli licchavī pitā.",
  "tha-ap545:29.1_0": "Khattiye puññakammena,",
  "tha-ap545:29.2_0": "dvārarodhassa vāhasā;",
  "tha-ap545:29.3_0": "Satta vassāni nivasiṁ,",
  "tha-ap545:29.4_0": "mātukucchimhi dukkhito.",
  "tha-ap545:30.1_0": "Sattāhaṁ dvāramūḷhohaṁ,",
  "tha-ap545:30.2_0": "mahādukkhasamappito;",
  "tha-ap545:30.3_0": "Mātā me chandadānena,",
  "tha-ap545:30.4_0": "evaṁ āsi sudukkhitā.",
  "tha-ap545:31.1_0": "Suvatthitohaṁ nikkhanto,",
  "tha-ap545:31.2_0": "buddhena anukampito;",
  "tha-ap545:31.3_0": "Nikkhantadivaseyeva,",
  "tha-ap545:31.4_0": "pabbajiṁ anagāriyaṁ.",
  "tha-ap545:32.1_0": "Upajjhā sāriputto me,",
  "tha-ap545:32.2_0": "moggallāno mahiddhiko;",
  "tha-ap545:32.3_0": "Kese oropayanto me,",
  "tha-ap545:32.4_0": "anusāsi mahāmati.",
  "tha-ap545:33.1_0": "Kesesu chijjamānesu,",
  "tha-ap545:33.2_0": "arahattamapāpuṇiṁ;",
  "tha-ap545:33.3_0": "Devā nāgā manussā ca,",
  "tha-ap545:33.4_0": "paccaye upanenti me.",
  "tha-ap545:34.1_0": "Padumuttaranāthañca,",
  "tha-ap545:34.2_0": "vipassiñca vināyakaṁ;",
  "tha-ap545:34.3_0": "Yaṁ pūjayiṁ pamudito,",
  "tha-ap545:34.4_0": "paccayehi visesato.",
  "tha-ap545:35.1_0": "Tato tesaṁ visesena,",
  "tha-ap545:35.2_0": "kammānaṁ vipuluttamaṁ;",
  "tha-ap545:35.3_0": "Lābhaṁ labhāmi sabbattha,",
  "tha-ap545:35.4_0": "vane gāme jale thale.",
  "tha-ap545:36.1_0": "Revataṁ dassanatthāya,",
  "tha-ap545:36.2_0": "yadā yāti vināyako;",
  "tha-ap545:36.3_0": "Tiṁsabhikkhusahassehi,",
  "tha-ap545:36.4_0": "saha lokagganāyako.",
  "tha-ap545:37.1_0": "Tadā devopaṇītehi,",
  "tha-ap545:37.2_0": "mamatthāya mahāmati;",
  "tha-ap545:37.3_0": "Paccayehi mahāvīro,",
  "tha-ap545:37.4_0": "sasaṅgho lokanāyako.",
  "tha-ap545:38.1_0": "Upaṭṭhito mayā buddho,",
  "tha-ap545:38.2_0": "gantvā revatamaddasa;",
  "tha-ap545:38.3_0": "Tato jetavanaṁ gantvā,",
  "tha-ap545:38.4_0": "etadagge ṭhapesi maṁ.",
  "tha-ap545:39.1_0": "‘Lābhīnaṁ sīvali aggo,",
  "tha-ap545:39.2_0": "mama sissesu bhikkhavo’;",
  "tha-ap545:39.3_0": "Sabbalokahito satthā,",
  "tha-ap545:39.4_0": "kittayī parisāsu maṁ.",
  "tha-ap545:40.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap545:40.2_0": "…pe…",
  "tha-ap545:40.3_0": "viharāmi anāsavo.",
  "tha-ap545:41.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap545:41.2_0": "…pe…",
  "tha-ap545:41.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap545:42.1_0": "Paṭisambhidā catasso,",
  "tha-ap545:42.2_0": "…pe…",
  "tha-ap545:42.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap545:43.1_0": "Itthaṁ sudaṁ āyasmā sīvalithero imā gāthāyo abhāsitthāti.",
  "tha-ap545:44.1_0": "Sīvalittherassāpadānaṁ tatiyaṁ."
}