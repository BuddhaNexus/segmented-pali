{
  "tha-ap70:0.1_0": "Therāpadāna",
  "tha-ap70:0.2_0": "Sakacintaniyavagga",
  "tha-ap70:0.3_0": "8. Ambadāyakattheraapadāna",
  "tha-ap70:1.1_0": "“Anomadassī bhagavā,",
  "tha-ap70:1.2_0": "nisinno pabbatantare;",
  "tha-ap70:1.3_0": "Mettāya aphari loke,",
  "tha-ap70:1.4_0": "appamāṇe nirūpadhi.",
  "tha-ap70:2.1_0": "Kapi ahaṁ tadā āsiṁ,",
  "tha-ap70:2.2_0": "himavante naguttame;",
  "tha-ap70:2.3_0": "Disvā anomadassiṁ taṁ,",
  "tha-ap70:2.4_0": "buddhe cittaṁ pasādayiṁ.",
  "tha-ap70:3.1_0": "Avidūre himavantassa,",
  "tha-ap70:3.2_0": "ambāsuṁ phalino tadā;",
  "tha-ap70:3.3_0": "Tato pakkaṁ gahetvāna,",
  "tha-ap70:3.4_0": "ambaṁ samadhukaṁ adaṁ.",
  "tha-ap70:4.1_0": "Taṁ me buddho viyākāsi,",
  "tha-ap70:4.2_0": "anomadassī mahāmuni;",
  "tha-ap70:4.3_0": "Iminā madhudānena,",
  "tha-ap70:4.4_0": "ambadānena cūbhayaṁ.",
  "tha-ap70:5.1_0": "Sattapaññāsakappamhi,",
  "tha-ap70:5.2_0": "devaloke ramissati;",
  "tha-ap70:5.3_0": "Avasesesu kappesu,",
  "tha-ap70:5.4_0": "vokiṇṇaṁ saṁsarissati.",
  "tha-ap70:6.1_0": "Khepetvā pāpakaṁ kammaṁ,",
  "tha-ap70:6.2_0": "paripakkāya buddhiyā;",
  "tha-ap70:6.3_0": "Vinipātamagantvāna,",
  "tha-ap70:6.4_0": "kilese jhāpayissati.",
  "tha-ap70:7.1_0": "Damena uttamenāhaṁ,",
  "tha-ap70:7.2_0": "damitomhi mahesinā;",
  "tha-ap70:7.3_0": "Pattomhi acalaṁ ṭhānaṁ,",
  "tha-ap70:7.4_0": "hitvā jayaparājayaṁ.",
  "tha-ap70:8.1_0": "Sattasattatikappasate,",
  "tha-ap70:8.2_0": "ambaṭṭhajasanāmakā;",
  "tha-ap70:8.3_0": "Catuddasa te rājāno,",
  "tha-ap70:8.4_0": "cakkavattī mahabbalā.",
  "tha-ap70:9.1_0": "Paṭisambhidā catasso,",
  "tha-ap70:9.2_0": "…pe…",
  "tha-ap70:9.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap70:10.1_0": "Itthaṁ sudaṁ āyasmā ambadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap70:11.1_0": "Ambadāyakattherassāpadānaṁ aṭṭhamaṁ."
}