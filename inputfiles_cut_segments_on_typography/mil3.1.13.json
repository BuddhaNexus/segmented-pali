{
  "mil3.1.13:0.1_0": "Milindapañha",
  "mil3.1.13:0.2_0": "Mahāvagga",
  "mil3.1.13:0.3_0": "13. Satilakkhaṇapañha",
  "mil3.1.13:1.1_0": "Rājā āha—",
  "mil3.1.13:1.2_0": "“bhante nāgasena, kiṁlakkhaṇā satī”ti?",
  "mil3.1.13:1.3_0": "“Apilāpanalakkhaṇā, mahārāja, sati, upaggaṇhanalakkhaṇā cā”ti.",
  "mil3.1.13:1.4_0": "“Kathaṁ, bhante, apilāpanalakkhaṇā satī”ti?",
  "mil3.1.13:1.5_0": "“Sati, mahārāja,",
  "mil3.1.13:1.5_1": "uppajjamānā kusalākusalasāvajjānavajjahīnappaṇītakaṇhasukkasappaṭibhāgadhamme apilāpeti ‘ime cattāro satipaṭṭhānā,",
  "mil3.1.13:1.5_2": "ime cattāro sammappadhānā,",
  "mil3.1.13:1.5_3": "ime cattāro iddhipādā,",
  "mil3.1.13:1.5_4": "imāni pañcindriyāni,",
  "mil3.1.13:1.5_5": "imāni pañca balāni,",
  "mil3.1.13:1.5_6": "ime satta bojjhaṅgā,",
  "mil3.1.13:1.5_7": "ayaṁ ariyo aṭṭhaṅgiko maggo,",
  "mil3.1.13:1.5_8": "ayaṁ samatho,",
  "mil3.1.13:1.5_9": "ayaṁ vipassanā,",
  "mil3.1.13:1.5_10": "ayaṁ vijjā,",
  "mil3.1.13:1.5_11": "ayaṁ vimuttī’ti.",
  "mil3.1.13:1.6_0": "Tato yogāvacaro sevitabbe dhamme sevati, asevitabbe dhamme na sevati.",
  "mil3.1.13:1.7_0": "Bhajitabbe dhamme bhajati abhajitabbe dhamme na bhajati.",
  "mil3.1.13:1.8_0": "Evaṁ kho, mahārāja, apilāpanalakkhaṇā satī”ti.",
  "mil3.1.13:2.1_0": "“Opammaṁ karohī”ti.",
  "mil3.1.13:2.2_0": "“Yathā, mahārāja,",
  "mil3.1.13:2.2_1": "rañño cakkavattissa bhaṇḍāgāriko rājānaṁ cakkavattiṁ sāyaṁ pātaṁ yasaṁ sarāpeti ‘ettakā, deva,",
  "mil3.1.13:2.2_2": "te hatthī,",
  "mil3.1.13:2.2_3": "ettakā assā,",
  "mil3.1.13:2.2_4": "ettakā rathā,",
  "mil3.1.13:2.2_5": "ettakā pattī,",
  "mil3.1.13:2.2_6": "ettakaṁ hiraññaṁ,",
  "mil3.1.13:2.2_7": "ettakaṁ suvaṇṇaṁ,",
  "mil3.1.13:2.2_8": "ettakaṁ sāpateyyaṁ,",
  "mil3.1.13:2.2_9": "taṁ devo saratū’ti rañño sāpateyyaṁ apilāpeti;",
  "mil3.1.13:2.3_0": "evameva kho, mahārāja,",
  "mil3.1.13:2.3_1": "sati uppajjamānā kusalākusalasāvajjānavajjahīnappaṇītakaṇhasukkasappaṭibhāgadhamme apilāpeti ‘ime cattāro satipaṭṭhānā,",
  "mil3.1.13:2.3_2": "ime cattāro sammappadhānā,",
  "mil3.1.13:2.3_3": "ime cattāro iddhipādā,",
  "mil3.1.13:2.3_4": "imāni pañcindriyāni,",
  "mil3.1.13:2.3_5": "imāni pañca balāni,",
  "mil3.1.13:2.3_6": "ime satta bojjhaṅgā,",
  "mil3.1.13:2.3_7": "ayaṁ ariyo aṭṭhaṅgiko maggo,",
  "mil3.1.13:2.3_8": "ayaṁ samatho,",
  "mil3.1.13:2.3_9": "ayaṁ vipassanā,",
  "mil3.1.13:2.3_10": "ayaṁ vijjā,",
  "mil3.1.13:2.3_11": "ayaṁ vimuttī’ti.",
  "mil3.1.13:2.4_0": "Tato yogāvacaro sevitabbe dhamme sevati, asevitabbe dhamme na sevati.",
  "mil3.1.13:2.5_0": "Bhajitabbe dhamme bhajati, abhajitabbe dhamme na bhajati.",
  "mil3.1.13:2.6_0": "Evaṁ kho, mahārāja, apilāpanalakkhaṇā satī”ti.",
  "mil3.1.13:3.1_0": "“Kathaṁ, bhante, upaggaṇhanalakkhaṇā satī”ti?",
  "mil3.1.13:3.2_0": "“Sati, mahārāja,",
  "mil3.1.13:3.2_1": "uppajjamānā hitāhitānaṁ dhammānaṁ gatiyo samanveti ‘ime dhammā hitā,",
  "mil3.1.13:3.2_2": "ime dhammā ahitā.",
  "mil3.1.13:3.3_0": "Ime dhammā upakārā, ime dhammā anupakārā’ti.",
  "mil3.1.13:3.4_0": "Tato yogāvacaro ahite dhamme apanudeti, hite dhamme upaggaṇhāti.",
  "mil3.1.13:3.5_0": "Anupakāre dhamme apanudeti, upakāre dhamme upaggaṇhāti.",
  "mil3.1.13:3.6_0": "Evaṁ kho, mahārāja, upaggaṇhanalakkhaṇā satī”ti.",
  "mil3.1.13:4.1_0": "“Opammaṁ karohī”ti.",
  "mil3.1.13:4.2_0": "“Yathā, mahārāja,",
  "mil3.1.13:4.2_1": "rañño cakkavattissa pariṇāyakaratanaṁ rañño hitāhite jānāti ‘ime rañño hitā,",
  "mil3.1.13:4.2_2": "ime ahitā.",
  "mil3.1.13:4.3_0": "Ime upakārā, ime anupakārā’ti.",
  "mil3.1.13:4.4_0": "Tato ahite apanudeti, hite upaggaṇhāti.",
  "mil3.1.13:4.5_0": "Anupakāre apanudeti, upakāre upaggaṇhāti.",
  "mil3.1.13:4.6_0": "Evameva kho, mahārāja,",
  "mil3.1.13:4.6_1": "sati uppajjamānā hitāhitānaṁ dhammānaṁ gatiyo samanveti ‘ime dhammā hitā,",
  "mil3.1.13:4.6_2": "ime dhammā ahitā.",
  "mil3.1.13:4.7_0": "Ime dhammā upakārā, ime dhammā anupakārā’ti.",
  "mil3.1.13:4.8_0": "Tato yogāvacaro ahite dhamme apanudeti, hite dhamme upaggaṇhāti.",
  "mil3.1.13:4.9_0": "Anupakāre dhamme apanudeti, upakāre damme upaggaṇhāti.",
  "mil3.1.13:4.10_0": "Evaṁ kho, mahārāja, upaggaṇhanalakkhaṇā sati.",
  "mil3.1.13:4.11_0": "Bhāsitampetaṁ, mahārāja, bhagavatā—",
  "mil3.1.13:4.12_0": "‘satiñca khvāhaṁ, bhikkhave, sabbatthikaṁ vadāmī’”ti.",
  "mil3.1.13:5.1_0": "“Kallosi, bhante nāgasenā”ti.",
  "mil3.1.13:6.1_0": "Satilakkhaṇapañho terasamo."
}