{
  "atk-s0402a30:0_0": "(12) 2. Āpāyikavaggo",
  "atk-s0402a30:1_0": "1. Āpāyikasuttavaṇṇanā",
  "atk-s0402a30:2_0": "114.",
  "atk-s0402a30:2_1": "Dutiyassa paṭhame apāyaṁ gacchissantīti āpāyikā.",
  "atk-s0402a30:2_2": "Nirayaṁ gacchissantīti nerayikā.",
  "atk-s0402a30:2_3": "Idamappahāyāti idaṁ brahmacāripaṭiññatādiṁ pāpadhammattayaṁ avijahitvā.",
  "atk-s0402a30:2_4": "Brahmacāripaṭiññoti brahmacāripaṭirūpako,",
  "atk-s0402a30:2_5": "tesaṁ vā ākappaṁ avijahanena “ahampi brahmacārī”ti evaṁpaṭiñño.",
  "atk-s0402a30:2_6": "Anuddhaṁsetīti akkosati paribhāsati codeti.",
  "atk-s0402a30:2_7": "Natthi kāmesu dosoti kilesakāmena vatthukāme sevantassa natthi doso.",
  "atk-s0402a30:2_8": "Pātabyatanti pivitabbataṁ paribhuñjitabbataṁ nirāsaṅkena cittena pipāsitassa pānīyapivanasadisaṁ paribhuñjitabbataṁ.",
  "atk-s0402a30:2_9": "Imasmiṁ sutte vaṭṭameva kathitaṁ.",
  "atk-s0402a30:3_0": "2. Dullabhasuttavaṇṇanā",
  "atk-s0402a30:4_0": "115.",
  "atk-s0402a30:4_1": "Dutiye kataññū katavedīti “iminā mayhaṁ kata”nti tena katakammaṁ ñatvā viditaṁ pākaṭaṁ katvā paṭikaraṇakapuggalo.",
  "atk-s0402a30:5_0": "3. Appameyyasuttavaṇṇanā",
  "atk-s0402a30:6_0": "116.",
  "atk-s0402a30:6_1": "Tatiye sukhena metabboti suppameyyo.",
  "atk-s0402a30:6_2": "Dukkhena metabboti duppameyyo.",
  "atk-s0402a30:6_3": "Pametuṁ na sakkotīti appameyyo.",
  "atk-s0402a30:6_4": "Unnaḷoti uggatanaḷo,",
  "atk-s0402a30:6_5": "tucchamānaṁ ukkhipitvā ṭhitoti attho.",
  "atk-s0402a30:6_6": "Capaloti pattamaṇḍanādinā cāpallena samannāgato.",
  "atk-s0402a30:6_7": "Mukharoti mukhakharo.",
  "atk-s0402a30:6_8": "Vikiṇṇavācoti asaññatavacano.",
  "atk-s0402a30:6_9": "Asamāhitoti cittekaggatārahito.",
  "atk-s0402a30:6_10": "Vibbhantacittoti bhantacitto bhantagāvibhantamigasappaṭibhāgo.",
  "atk-s0402a30:6_11": "Pākatindriyoti vivaṭindriyo.",
  "atk-s0402a30:6_12": "Sesamettha uttānamevāti.",
  "atk-s0402a30:7_0": "4. Āneñjasuttavaṇṇanā",
  "atk-s0402a30:8_0": "117.",
  "atk-s0402a30:8_1": "Catutthe tadassādetīti taṁ jhānaṁ assādeti.",
  "atk-s0402a30:8_2": "Taṁ nikāmetīti tadeva pattheti.",
  "atk-s0402a30:8_3": "Tena ca vittiṁ āpajjatīti tena jhānena tuṭṭhiṁ āpajjati.",
  "atk-s0402a30:8_4": "Tatra ṭhitoti tasmiṁ jhāne ṭhito.",
  "atk-s0402a30:8_5": "Tadadhimuttoti tattheva adhimutto.",
  "atk-s0402a30:8_6": "Tabbahulavihārīti tena bahulaṁ viharanto.",
  "atk-s0402a30:8_7": "Sahabyataṁ upapajjatīti sahabhāvaṁ upapajjati,",
  "atk-s0402a30:8_8": "tasmiṁ devaloke nibbattatīti attho.",
  "atk-s0402a30:8_9": "Nirayampi gacchatītiādi nirayādīhi avippamuttattā aparapariyāyavasena tattha gamanaṁ sandhāya vuttaṁ.",
  "atk-s0402a30:8_10": "Na hi tassa upacārajjhānato balavataraṁ akusalaṁ atthi,",
  "atk-s0402a30:8_11": "yena anantaraṁ apāye nibbatteyya.",
  "atk-s0402a30:8_12": "Bhagavato pana sāvakoti sotāpannasakadāgāmianāgāmīnaṁ aññataro.",
  "atk-s0402a30:8_13": "Tasmiṁyeva bhaveti tattheva arūpabhave.",
  "atk-s0402a30:8_14": "Parinibbāyatīti appaccayaparinibbānena parinibbāyati.",
  "atk-s0402a30:8_15": "Adhippayāsoti adhikappayogo.",
  "atk-s0402a30:8_16": "Sesamettha vuttanayeneva veditabbaṁ.",
  "atk-s0402a30:8_17": "Imasmiṁ pana sutte puthujjanassa upapattijjhānaṁ kathitaṁ,",
  "atk-s0402a30:8_18": "ariyasāvakassa tadeva upapattijjhānañca vipassanāpādakajjhānañca kathitaṁ.",
  "atk-s0402a30:9_0": "5. Vipattisampadāsuttavaṇṇanā",
  "atk-s0402a30:10_0": "118.",
  "atk-s0402a30:10_1": "Pañcame sīlavipattīti sīlassa vipannākāro.",
  "atk-s0402a30:10_2": "Sesadvayepi eseva nayo.",
  "atk-s0402a30:10_3": "Natthi dinnanti dinnassa phalābhāvaṁ sandhāya vadati.",
  "atk-s0402a30:10_4": "Yiṭṭhaṁ vuccati mahāyogo.",
  "atk-s0402a30:10_5": "Hutanti paheṇakasakkāro adhippeto.",
  "atk-s0402a30:10_6": "Tampi ubhayaṁ phalābhāvameva sandhāya paṭikkhipati.",
  "atk-s0402a30:10_7": "Sukatadukkaṭānanti sukatadukkatānaṁ,",
  "atk-s0402a30:10_8": "kusalākusalānanti attho.",
  "atk-s0402a30:10_9": "Phalaṁ vipākoti yaṁ phalanti vā vipākoti vā vuccati,",
  "atk-s0402a30:10_10": "taṁ natthīti vadati.",
  "atk-s0402a30:10_11": "Natthi ayaṁ lokoti paraloke ṭhitassa ayaṁ loko natthi,",
  "atk-s0402a30:10_12": "natthi paro lokoti idha loke ṭhitassāpi paraloko natthi,",
  "atk-s0402a30:10_13": "sabbe tattha tattheva ucchijjantīti dasseti.",
  "atk-s0402a30:10_14": "Natthi mātā natthi pitāti tesu sammāpaṭipattimicchāpaṭipattīnaṁ phalābhāvavasena vadati.",
  "atk-s0402a30:10_15": "Natthi sattā opapātikāti cavitvā uppajjanakasattā nāma natthīti vadati.",
  "atk-s0402a30:10_16": "Sampadāti pāripūriyo.",
  "atk-s0402a30:10_17": "Sīlasampadāti sīlassa paripuṇṇaavekallabhāvo.",
  "atk-s0402a30:10_18": "Sesadvayepi eseva nayo.",
  "atk-s0402a30:10_19": "Atthi dinnantiādi vuttapaṭipakkhanayena gahetabbaṁ.",
  "atk-s0402a30:11_0": "6. Apaṇṇakasuttavaṇṇanā",
  "atk-s0402a30:12_0": "119.",
  "atk-s0402a30:12_1": "Chaṭṭhe apaṇṇako maṇīti chahi talehi samannāgato pāsako.",
  "atk-s0402a30:12_2": "Sugatiṁ sagganti cātumahārājikādīsu aññataraṁ saggaṁ lokaṁ.",
  "atk-s0402a30:12_3": "Imasmiṁ sutte sīlañca sammādiṭṭhi cāti ubhayampi missakaṁ kathitaṁ.",
  "atk-s0402a30:12_4": "Sattamaṁ uttānameva.",
  "atk-s0402a30:13_0": "8. Paṭhamasoceyyasuttavaṇṇanā",
  "atk-s0402a30:14_0": "121.",
  "atk-s0402a30:14_1": "Aṭṭhame soceyyānīti sucibhāvā.",
  "atk-s0402a30:14_2": "Kāyasoceyyanti kāyadvāre sucibhāvo.",
  "atk-s0402a30:14_3": "Sesadvayepi eseva nayo.",
  "atk-s0402a30:14_4": "Imesu pana paṭipāṭiyā catūsu suttesu agārikapaṭipadā kathitā.",
  "atk-s0402a30:14_5": "Sotāpannasakadāgāmīnampi vaṭṭati.",
  "atk-s0402a30:15_0": "9. Dutiyasoceyyasuttavaṇṇanā",
  "atk-s0402a30:16_0": "122.",
  "atk-s0402a30:16_1": "Navame ajjhattanti niyakajjhattaṁ.",
  "atk-s0402a30:16_2": "Kāmacchandanti kāmacchandanīvaraṇaṁ.",
  "atk-s0402a30:16_3": "Byāpādādīsupi eseva nayo.",
  "atk-s0402a30:16_4": "Sesamettha heṭṭhā vuttanayameva.",
  "atk-s0402a30:16_5": "Gāthāya pana kāyasucinti kāyadvāre suciṁ,",
  "atk-s0402a30:16_6": "kāyena vā suciṁ.",
  "atk-s0402a30:16_7": "Sesadvayepi eseva nayo.",
  "atk-s0402a30:16_8": "Ninhātapāpakanti sabbe pāpe ninhāpetvā dhovitvā ṭhitaṁ.",
  "atk-s0402a30:16_9": "Iminā suttenapi gāthāyapi khīṇāsavova kathitoti.",
  "atk-s0402a30:17_0": "10. Moneyyasuttavaṇṇanā",
  "atk-s0402a30:18_0": "123.",
  "atk-s0402a30:18_1": "Dasame moneyyānīti munibhāvā.",
  "atk-s0402a30:18_2": "Kāyamoneyyanti kāyadvāre munibhāvo sādhubhāvo paṇḍitabhāvo.",
  "atk-s0402a30:18_3": "Sesadvayepi eseva nayo.",
  "atk-s0402a30:18_4": "Idaṁ vuccati,",
  "atk-s0402a30:18_5": "bhikkhave,",
  "atk-s0402a30:18_6": "kāyamoneyyanti idaṁ tividhakāyaduccaritappahānaṁ kāyamoneyyaṁ nāma.",
  "atk-s0402a30:18_7": "Apica tividhaṁ kāyasucaritampi kāyamoneyyaṁ,",
  "atk-s0402a30:18_8": "tathā kāyārammaṇaṁ ñāṇaṁ kāyamoneyyaṁ,",
  "atk-s0402a30:18_9": "kāyapariññā kāyamoneyyaṁ,",
  "atk-s0402a30:18_10": "pariññāsahagato maggo kāyamoneyyaṁ,",
  "atk-s0402a30:18_11": "kāye chandarāgassa pahānaṁ kāyamoneyyaṁ,",
  "atk-s0402a30:18_12": "kāyasaṅkhāranirodho catutthajjhānasamāpatti kāyamoneyyaṁ.",
  "atk-s0402a30:18_13": "Vacīmoneyyepi eseva nayo.",
  "atk-s0402a30:19_0": "Ayaṁ panettha viseso –",
  "atk-s0402a30:19_1": "yathā idha catutthajjhānasamāpatti,",
  "atk-s0402a30:19_2": "evaṁ tattha vacīsaṅkhāranirodho dutiyajjhānasamāpatti vacīmoneyyanti veditabbā.",
  "atk-s0402a30:19_3": "Manomoneyyampi imināva nayena atthaṁ ñatvā cittasaṅkhāranirodho saññāvedayitanirodhasamāpatti manomoneyyanti veditabbā.",
  "atk-s0402a30:19_4": "Kāyamuninti kāyadvāre muniṁ uttamaṁ parisuddhaṁ,",
  "atk-s0402a30:19_5": "kāyena vā muniṁ.",
  "atk-s0402a30:19_6": "Sesadvayepi eseva nayo.",
  "atk-s0402a30:19_7": "Sabbappahāyinanti khīṇāsavaṁ.",
  "atk-s0402a30:19_8": "Khīṇāsavo hi sabbappahāyī nāmāti.",
  "atk-s0402a30:20_0": "Āpāyikavaggo dutiyo."
}