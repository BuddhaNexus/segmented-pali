{
  "tha-ap21:0.1_0": "Therāpadāna",
  "tha-ap21:0.2_0": "Sīhāsaniyavagga",
  "tha-ap21:0.3_0": "9. Sopākattheraapadāna",
  "tha-ap21:1.1_0": "“Pabbhāraṁ sodhayantassa,",
  "tha-ap21:1.2_0": "vipine pabbatuttame;",
  "tha-ap21:1.3_0": "Siddhattho nāma bhagavā,",
  "tha-ap21:1.4_0": "āgacchi mama santikaṁ.",
  "tha-ap21:2.1_0": "Buddhaṁ upagataṁ disvā,",
  "tha-ap21:2.2_0": "lokajeṭṭhassa tādino;",
  "tha-ap21:2.3_0": "Santharaṁ paññapetvāna,",
  "tha-ap21:2.4_0": "pupphāsanamadāsahaṁ.",
  "tha-ap21:3.1_0": "Pupphāsane nisīditvā,",
  "tha-ap21:3.2_0": "siddhattho lokanāyako;",
  "tha-ap21:3.3_0": "Mamañca gatimaññāya,",
  "tha-ap21:3.4_0": "aniccatamudāhari.",
  "tha-ap21:4.1_0": "‘Aniccā vata saṅkhārā,",
  "tha-ap21:4.2_0": "uppādavayadhammino;",
  "tha-ap21:4.3_0": "Uppajjitvā nirujjhanti,",
  "tha-ap21:4.4_0": "tesaṁ vūpasamo sukho’.",
  "tha-ap21:5.1_0": "Idaṁ vatvāna sabbaññū,",
  "tha-ap21:5.2_0": "lokajeṭṭho narāsabho;",
  "tha-ap21:5.3_0": "Nabhaṁ abbhuggami vīro,",
  "tha-ap21:5.4_0": "haṁsarājāva ambare.",
  "tha-ap21:6.1_0": "Sakaṁ diṭṭhiṁ jahitvāna,",
  "tha-ap21:6.2_0": "bhāvayāniccasaññahaṁ;",
  "tha-ap21:6.3_0": "Ekāhaṁ bhāvayitvāna,",
  "tha-ap21:6.4_0": "tattha kālaṁ kato ahaṁ.",
  "tha-ap21:7.1_0": "Dve sampattī anubhotvā,",
  "tha-ap21:7.2_0": "sukkamūlena codito;",
  "tha-ap21:7.3_0": "Pacchime bhave sampatte,",
  "tha-ap21:7.4_0": "sapākayonupāgamiṁ.",
  "tha-ap21:8.1_0": "Agārā abhinikkhamma,",
  "tha-ap21:8.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap21:8.3_0": "Jātiyā sattavassohaṁ,",
  "tha-ap21:8.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap21:9.1_0": "Āraddhavīriyo pahitatto,",
  "tha-ap21:9.2_0": "Sīlesu susamāhito;",
  "tha-ap21:9.3_0": "Tosetvāna mahānāgaṁ,",
  "tha-ap21:9.4_0": "Alatthaṁ upasampadaṁ.",
  "tha-ap21:10.1_0": "Catunnavutito kappe,",
  "tha-ap21:10.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap21:10.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap21:10.4_0": "pupphadānassidaṁ phalaṁ.",
  "tha-ap21:11.1_0": "Catunnavutito kappe,",
  "tha-ap21:11.2_0": "yaṁ saññaṁ bhāvayiṁ tadā;",
  "tha-ap21:11.3_0": "Taṁ saññaṁ bhāvayantassa,",
  "tha-ap21:11.4_0": "patto me āsavakkhayo.",
  "tha-ap21:12.1_0": "Paṭisambhidā catasso,",
  "tha-ap21:12.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap21:12.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap21:12.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap21:13.1_0": "Itthaṁ sudaṁ āyasmā sopāko thero imā gāthāyo abhāsitthāti.",
  "tha-ap21:14.1_0": "Sopākattherassāpadānaṁ navamaṁ."
}