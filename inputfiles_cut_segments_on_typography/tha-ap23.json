{
  "tha-ap23:0.1_0": "Therāpadāna",
  "tha-ap23:0.2_0": "Subhūtivagga",
  "tha-ap23:0.3_0": "1. Subhūtittheraapadāna",
  "tha-ap23:1.1_0": "“Himavantassāvidūre,",
  "tha-ap23:1.2_0": "nisabho nāma pabbato;",
  "tha-ap23:1.3_0": "Assamo sukato mayhaṁ,",
  "tha-ap23:1.4_0": "paṇṇasālā sumāpitā.",
  "tha-ap23:2.1_0": "Kosiyo nāma nāmena,",
  "tha-ap23:2.2_0": "jaṭilo uggatāpano;",
  "tha-ap23:2.3_0": "Ekākiyo adutiyo,",
  "tha-ap23:2.4_0": "vasāmi nisabhe tadā.",
  "tha-ap23:3.1_0": "Phalaṁ mūlañca paṇṇañca,",
  "tha-ap23:3.2_0": "na bhuñjāmi ahaṁ tadā;",
  "tha-ap23:3.3_0": "Pavattaṁva supātāhaṁ,",
  "tha-ap23:3.4_0": "upajīvāmi tāvade.",
  "tha-ap23:4.1_0": "Nāhaṁ kopemi ājīvaṁ,",
  "tha-ap23:4.2_0": "cajamānopi jīvitaṁ;",
  "tha-ap23:4.3_0": "Ārādhemi sakaṁ cittaṁ,",
  "tha-ap23:4.4_0": "vivajjemi anesanaṁ.",
  "tha-ap23:5.1_0": "Rāgūpasaṁhitaṁ cittaṁ,",
  "tha-ap23:5.2_0": "yadā uppajjate mama;",
  "tha-ap23:5.3_0": "Sayaṁva paccavekkhāmi,",
  "tha-ap23:5.4_0": "ekaggo taṁ damemahaṁ.",
  "tha-ap23:6.1_0": "‘Rajjase rajjanīye ca,",
  "tha-ap23:6.2_0": "dussanīye ca dussase;",
  "tha-ap23:6.3_0": "Muyhase mohanīye ca,",
  "tha-ap23:6.4_0": "nikkhamassu vanā tuvaṁ.",
  "tha-ap23:7.1_0": "Visuddhānaṁ ayaṁ vāso,",
  "tha-ap23:7.2_0": "nimmalānaṁ tapassinaṁ;",
  "tha-ap23:7.3_0": "Mā kho visuddhaṁ dūsesi,",
  "tha-ap23:7.4_0": "nikkhamassu vanā tuvaṁ.",
  "tha-ap23:8.1_0": "Agāriko bhavitvāna,",
  "tha-ap23:8.2_0": "yadā puttaṁ labhissasi;",
  "tha-ap23:8.3_0": "Ubhopi mā virādhesi,",
  "tha-ap23:8.4_0": "nikkhamassu vanā tuvaṁ.",
  "tha-ap23:9.1_0": "Chavālātaṁ yathā kaṭṭhaṁ,",
  "tha-ap23:9.2_0": "na kvaci kiccakārakaṁ;",
  "tha-ap23:9.3_0": "Neva gāme araññe vā,",
  "tha-ap23:9.4_0": "na hi taṁ kaṭṭhasammataṁ.",
  "tha-ap23:10.1_0": "Chavālātūpamo tvaṁsi,",
  "tha-ap23:10.2_0": "na gihī nāpi saññato;",
  "tha-ap23:10.3_0": "Ubhato muttako ajja,",
  "tha-ap23:10.4_0": "nikkhamassu vanā tuvaṁ.",
  "tha-ap23:11.1_0": "Siyā nu kho tava etaṁ,",
  "tha-ap23:11.2_0": "ko pajānāti te idaṁ;",
  "tha-ap23:11.3_0": "Saddhādhuraṁ vahisi me,",
  "tha-ap23:11.4_0": "kosajjabahulāya ca.",
  "tha-ap23:12.1_0": "Jigucchissanti taṁ viññū,",
  "tha-ap23:12.2_0": "asuciṁ nāgariko yathā;",
  "tha-ap23:12.3_0": "Ākaḍḍhitvāna isayo,",
  "tha-ap23:12.4_0": "codayissanti taṁ sadā.",
  "tha-ap23:13.1_0": "Taṁ viññū pavadissanti,",
  "tha-ap23:13.2_0": "samatikkantasāsanaṁ;",
  "tha-ap23:13.3_0": "Saṁvāsaṁ alabhanto hi,",
  "tha-ap23:13.4_0": "kathaṁ jīvihisi tuvaṁ.",
  "tha-ap23:14.1_0": "Tidhā pabhinnaṁ mātaṅgaṁ,",
  "tha-ap23:14.2_0": "kuñjaraṁ saṭṭhihāyanaṁ;",
  "tha-ap23:14.3_0": "Balī nāgo upagantvā,",
  "tha-ap23:14.4_0": "yūthā nīharate gajaṁ.",
  "tha-ap23:15.1_0": "Yūthā vinissaṭo santo,",
  "tha-ap23:15.2_0": "sukhaṁ sātaṁ na vindati;",
  "tha-ap23:15.3_0": "Dukkhito vimano hoti,",
  "tha-ap23:15.4_0": "pajjhāyanto pavedhati.",
  "tha-ap23:16.1_0": "Tatheva jaṭilā tampi,",
  "tha-ap23:16.2_0": "nīharissanti dummatiṁ;",
  "tha-ap23:16.3_0": "Tehi tvaṁ nissaṭo santo,",
  "tha-ap23:16.4_0": "sukhaṁ sātaṁ na lacchasi.",
  "tha-ap23:17.1_0": "Divā vā yadi vā rattiṁ,",
  "tha-ap23:17.2_0": "sokasallasamappito;",
  "tha-ap23:17.3_0": "Ḍayhasi pariḷāhena,",
  "tha-ap23:17.4_0": "gajo yūthāva nissaṭo.",
  "tha-ap23:18.1_0": "Jātarūpaṁ yathā kūṭaṁ,",
  "tha-ap23:18.2_0": "neva jhāyati katthaci;",
  "tha-ap23:18.3_0": "Tathā sīlavihīno tvaṁ,",
  "tha-ap23:18.4_0": "na jhāyissasi katthaci.",
  "tha-ap23:19.1_0": "Agāraṁ vasamānopi,",
  "tha-ap23:19.2_0": "kathaṁ jīvihisi tuvaṁ;",
  "tha-ap23:19.3_0": "Mattikaṁ pettikañcāpi,",
  "tha-ap23:19.4_0": "natthi te nihitaṁ dhanaṁ.",
  "tha-ap23:20.1_0": "Sayaṁ kammaṁ karitvāna,",
  "tha-ap23:20.2_0": "gatte sedaṁ pamocayaṁ;",
  "tha-ap23:20.3_0": "Evaṁ jīvihisi gehe,",
  "tha-ap23:20.4_0": "sādhu te taṁ na ruccati.",
  "tha-ap23:21.1_0": "Evāhaṁ tattha vāremi,",
  "tha-ap23:21.2_0": "saṅkilesagataṁ manaṁ;",
  "tha-ap23:21.3_0": "Nānādhammakathaṁ katvā,",
  "tha-ap23:21.4_0": "pāpā cittaṁ nivārayiṁ’.",
  "tha-ap23:22.1_0": "Evaṁ me viharantassa,",
  "tha-ap23:22.2_0": "appamādavihārino;",
  "tha-ap23:22.3_0": "Tiṁsavassasahassāni,",
  "tha-ap23:22.4_0": "vipine me atikkamuṁ.",
  "tha-ap23:23.1_0": "Appamādarataṁ disvā,",
  "tha-ap23:23.2_0": "uttamatthaṁ gavesakaṁ;",
  "tha-ap23:23.3_0": "Padumuttarasambuddho,",
  "tha-ap23:23.4_0": "āgacchi mama santikaṁ.",
  "tha-ap23:24.1_0": "Timbarūsakavaṇṇābho,",
  "tha-ap23:24.2_0": "appameyyo anūpamo;",
  "tha-ap23:24.3_0": "Rūpenāsadiso buddho,",
  "tha-ap23:24.4_0": "ākāse caṅkamī tadā.",
  "tha-ap23:25.1_0": "Suphullo sālarājāva,",
  "tha-ap23:25.2_0": "vijjūvabbhaghanantare;",
  "tha-ap23:25.3_0": "Ñāṇenāsadiso buddho,",
  "tha-ap23:25.4_0": "ākāse caṅkamī tadā.",
  "tha-ap23:26.1_0": "Sīharājāvasambhīto,",
  "tha-ap23:26.2_0": "gajarājāva dappito;",
  "tha-ap23:26.3_0": "Lāsito byaggharājāva,",
  "tha-ap23:26.4_0": "ākāse caṅkamī tadā.",
  "tha-ap23:27.1_0": "Siṅgīnikkhasavaṇṇābho,",
  "tha-ap23:27.2_0": "khadiraṅgārasannibho;",
  "tha-ap23:27.3_0": "Maṇi yathā jotiraso,",
  "tha-ap23:27.4_0": "ākāse caṅkamī tadā.",
  "tha-ap23:28.1_0": "Visuddhakelāsanibho,",
  "tha-ap23:28.2_0": "puṇṇamāyeva candimā;",
  "tha-ap23:28.3_0": "Majjhanhikeva sūriyo,",
  "tha-ap23:28.4_0": "ākāse caṅkamī tadā.",
  "tha-ap23:29.1_0": "Disvā nabhe caṅkamantaṁ,",
  "tha-ap23:29.2_0": "evaṁ cintesahaṁ tadā;",
  "tha-ap23:29.3_0": "‘Devo nu kho ayaṁ satto,",
  "tha-ap23:29.4_0": "udāhu manujo ayaṁ.",
  "tha-ap23:30.1_0": "Na me suto vā diṭṭho vā,",
  "tha-ap23:30.2_0": "mahiyā ediso naro;",
  "tha-ap23:30.3_0": "Api mantapadaṁ atthi,",
  "tha-ap23:30.4_0": "ayaṁ satthā bhavissati’.",
  "tha-ap23:31.1_0": "Evāhaṁ cintayitvāna,",
  "tha-ap23:31.2_0": "sakaṁ cittaṁ pasādayiṁ;",
  "tha-ap23:31.3_0": "Nānāpupphañca gandhañca,",
  "tha-ap23:31.4_0": "sannipātesahaṁ tadā.",
  "tha-ap23:32.1_0": "Pupphāsanaṁ paññapetvā,",
  "tha-ap23:32.2_0": "sādhucittaṁ manoramaṁ;",
  "tha-ap23:32.3_0": "Narasārathinaṁ aggaṁ,",
  "tha-ap23:32.4_0": "idaṁ vacanamabraviṁ.",
  "tha-ap23:33.1_0": "‘Idaṁ me āsanaṁ vīra,",
  "tha-ap23:33.2_0": "paññattaṁ tavanucchavaṁ;",
  "tha-ap23:33.3_0": "Hāsayanto mamaṁ cittaṁ,",
  "tha-ap23:33.4_0": "nisīda kusumāsane’.",
  "tha-ap23:34.1_0": "Nisīdi tattha bhagavā,",
  "tha-ap23:34.2_0": "asambhītova kesarī;",
  "tha-ap23:34.3_0": "Sattarattindivaṁ buddho,",
  "tha-ap23:34.4_0": "pavare kusumāsane.",
  "tha-ap23:35.1_0": "Namassamāno aṭṭhāsiṁ,",
  "tha-ap23:35.2_0": "sattarattindivaṁ ahaṁ;",
  "tha-ap23:35.3_0": "Vuṭṭhahitvā samādhimhā,",
  "tha-ap23:35.4_0": "satthā loke anuttaro;",
  "tha-ap23:35.5_0": "Mama kammaṁ pakittento,",
  "tha-ap23:35.6_0": "idaṁ vacanamabravi.",
  "tha-ap23:36.1_0": "‘Bhāvehi buddhānussatiṁ,",
  "tha-ap23:36.2_0": "bhāvanānamanuttaraṁ;",
  "tha-ap23:36.3_0": "Imaṁ satiṁ bhāvayitvā,",
  "tha-ap23:36.4_0": "pūrayissasi mānasaṁ.",
  "tha-ap23:37.1_0": "Tiṁsakappasahassāni,",
  "tha-ap23:37.2_0": "devaloke ramissasi;",
  "tha-ap23:37.3_0": "Asītikkhattuṁ devindo,",
  "tha-ap23:37.4_0": "devarajjaṁ karissasi;",
  "tha-ap23:37.5_0": "Sahassakkhattuṁ cakkavattī,",
  "tha-ap23:37.6_0": "rājā raṭṭhe bhavissasi.",
  "tha-ap23:38.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap23:38.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap23:38.3_0": "Anubhossasi taṁ sabbaṁ,",
  "tha-ap23:38.4_0": "buddhānussatiyā phalaṁ.",
  "tha-ap23:39.1_0": "Bhavābhave saṁsaranto,",
  "tha-ap23:39.2_0": "mahābhogaṁ labhissasi;",
  "tha-ap23:39.3_0": "Bhoge te ūnatā natthi,",
  "tha-ap23:39.4_0": "buddhānussatiyā phalaṁ.",
  "tha-ap23:40.1_0": "Kappasatasahassamhi,",
  "tha-ap23:40.2_0": "okkākakulasambhavo;",
  "tha-ap23:40.3_0": "Gotamo nāma gottena,",
  "tha-ap23:40.4_0": "satthā loke bhavissati.",
  "tha-ap23:41.1_0": "Asītikoṭiṁ chaḍḍetvā,",
  "tha-ap23:41.2_0": "dāse kammakare bahū;",
  "tha-ap23:41.3_0": "Gotamassa bhagavato,",
  "tha-ap23:41.4_0": "sāsane pabbajissasi.",
  "tha-ap23:42.1_0": "Ārādhayitvā sambuddhaṁ,",
  "tha-ap23:42.2_0": "gotamaṁ sakyapuṅgavaṁ;",
  "tha-ap23:42.3_0": "Subhūti nāma nāmena,",
  "tha-ap23:42.4_0": "hessati satthu sāvako.",
  "tha-ap23:43.1_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap23:43.2_0": "dakkhiṇeyyaguṇamhi taṁ;",
  "tha-ap23:43.3_0": "Tathāraṇavihāre ca,",
  "tha-ap23:43.4_0": "dvīsu agge ṭhapessati’.",
  "tha-ap23:44.1_0": "Idaṁ vatvāna sambuddho,",
  "tha-ap23:44.2_0": "jalajuttamanāmako;",
  "tha-ap23:44.3_0": "Nabhaṁ abbhuggamī vīro,",
  "tha-ap23:44.4_0": "haṁsarājāva ambare.",
  "tha-ap23:45.1_0": "Sāsito lokanāthena,",
  "tha-ap23:45.2_0": "namassitvā tathāgataṁ;",
  "tha-ap23:45.3_0": "Sadā bhāvemi mudito,",
  "tha-ap23:45.4_0": "buddhānussatimuttamaṁ.",
  "tha-ap23:46.1_0": "Tena kammena sukatena,",
  "tha-ap23:46.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap23:46.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap23:46.4_0": "tāvatiṁsaṁ agacchahaṁ.",
  "tha-ap23:47.1_0": "Asītikkhattuṁ devindo,",
  "tha-ap23:47.2_0": "devarajjamakārayiṁ;",
  "tha-ap23:47.3_0": "Sahassakkhattuṁ rājā ca,",
  "tha-ap23:47.4_0": "cakkavattī ahosahaṁ.",
  "tha-ap23:48.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap23:48.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap23:48.3_0": "Anubhomi susampattiṁ,",
  "tha-ap23:48.4_0": "buddhānussatiyā phalaṁ.",
  "tha-ap23:49.1_0": "Bhavābhave saṁsaranto,",
  "tha-ap23:49.2_0": "mahābhogaṁ labhāmahaṁ;",
  "tha-ap23:49.3_0": "Bhoge me ūnatā natthi,",
  "tha-ap23:49.4_0": "buddhānussatiyā phalaṁ.",
  "tha-ap23:50.1_0": "Satasahassito kappe,",
  "tha-ap23:50.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap23:50.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap23:50.4_0": "buddhānussatiyā phalaṁ.",
  "tha-ap23:51.1_0": "Paṭisambhidā catasso,",
  "tha-ap23:51.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap23:51.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap23:51.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap23:52.1_0": "Itthaṁ sudaṁ āyasmā subhūti thero imā gāthāyo abhāsitthāti.",
  "tha-ap23:53.1_0": "Subhūtittherassāpadānaṁ paṭhamaṁ."
}