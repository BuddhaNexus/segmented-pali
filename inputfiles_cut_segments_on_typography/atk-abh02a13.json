{
  "atk-abh02a13:0_0": "14. Sikkhāpadavibhaṅgo",
  "atk-abh02a13:1_0": "1. Abhidhammabhājanīyavaṇṇanā",
  "atk-abh02a13:2_0": "703.",
  "atk-abh02a13:2_1": "Idāni tadanantare sikkhāpadavibhaṅge pañcāti gaṇanaparicchedo.",
  "atk-abh02a13:2_2": "Sikkhāpadānīti sikkhitabbapadāni;",
  "atk-abh02a13:2_3": "sikkhākoṭṭhāsāti attho.",
  "atk-abh02a13:2_4": "Apica upari āgatā sabbepi kusalā dhammā sikkhitabbato sikkhā.",
  "atk-abh02a13:2_5": "Pañcasu pana sīlaṅgesu yaṁkiñci aṅgaṁ tāsaṁ sikkhānaṁ patiṭṭhānaṭṭhena padanti sikkhānaṁ padattā sikkhāpadāni.",
  "atk-abh02a13:2_6": "Pāṇātipātāti pāṇassa atipātā ghātanā māraṇāti attho.",
  "atk-abh02a13:2_7": "Veramaṇīti virati.",
  "atk-abh02a13:2_8": "Adinnādānāti adinnassa ādānā;",
  "atk-abh02a13:2_9": "parapariggahitassa haraṇāti attho.",
  "atk-abh02a13:2_10": "Kāmesūti vatthukāmesu.",
  "atk-abh02a13:2_11": "Micchācārāti kilesakāmavasena lāmakācārā.",
  "atk-abh02a13:2_12": "Musāvādāti abhūtavādato.",
  "atk-abh02a13:2_13": "Surāmerayamajjapamādaṭṭhānāti ettha surāti piṭṭhasurā, pūvasurā,",
  "atk-abh02a13:2_14": "odanasurā,",
  "atk-abh02a13:2_15": "kiṇṇapakkhittā,",
  "atk-abh02a13:2_16": "sambhārasaṁyuttāti pañca surā.",
  "atk-abh02a13:2_17": "Merayanti pupphāsavo,",
  "atk-abh02a13:2_18": "phalāsavo, guḷāsavo,",
  "atk-abh02a13:2_19": "madhvāsavo,",
  "atk-abh02a13:2_20": "sambhārasaṁyuttoti pañca āsavā.",
  "atk-abh02a13:2_21": "Tadubhayampi madanīyaṭṭhena majjaṁ.",
  "atk-abh02a13:2_22": "Yāya cetanāya taṁ pivanti,",
  "atk-abh02a13:2_23": "sā pamādakāraṇattā pamādaṭṭhānaṁ;",
  "atk-abh02a13:2_24": "tasmā surāmerayamajjapamādaṭṭhānā.",
  "atk-abh02a13:2_25": "Ayaṁ tāvettha mātikānikkhepassa attho.",
  "atk-abh02a13:3_0": "704.",
  "atk-abh02a13:3_1": "Padabhājanīye pana yasmiṁ samaye kāmāvacarantiādi sabbaṁ heṭṭhā vuttanayattā uttānatthameva.",
  "atk-abh02a13:3_2": "Yasmā pana na kevalaṁ viratiyeva sikkhāpadaṁ,",
  "atk-abh02a13:3_3": "cetanāpi sikkhāpadameva,",
  "atk-abh02a13:3_4": "tasmā taṁ dassetuṁ dutiyanayo dassito.",
  "atk-abh02a13:3_5": "Yasmā ca na kevalaṁ eteyeva dve dhammā sikkhāpadaṁ,",
  "atk-abh02a13:3_6": "cetanāsampayuttā pana paropaṇṇāsadhammāpi sikkhitabbakoṭṭhāsato sikkhāpadameva,",
  "atk-abh02a13:3_7": "tasmā tatiyanayopi dassito.",
  "atk-abh02a13:4_0": "Tattha duvidhaṁ sikkhāpadaṁ pariyāyasikkhāpadaṁ nippariyāyasikkhāpadañca.",
  "atk-abh02a13:4_1": "Tattha virati nippariyāyasikkhāpadaṁ.",
  "atk-abh02a13:4_2": "Sā hi “pāṇātipātā veramaṇī”ti pāḷiyaṁ āgatā,",
  "atk-abh02a13:4_3": "no cetanā.",
  "atk-abh02a13:4_4": "Viramanto ca tāya eva tato tato viramati,",
  "atk-abh02a13:4_5": "na cetanāya.",
  "atk-abh02a13:4_6": "Cetanaṁ pana āharitvā dassesi.",
  "atk-abh02a13:4_7": "Tathā sesacetanāsampayuttadhamme.",
  "atk-abh02a13:4_8": "Vītikkamakāle hi veracetanā dussīlyaṁ nāma.",
  "atk-abh02a13:4_9": "Tasmā sā viratikālepi susīlyavasena vuttā.",
  "atk-abh02a13:4_10": "Phassādayo taṁsampayuttattā gahitāti.",
  "atk-abh02a13:5_0": "Idāni etesu sikkhāpadesu ñāṇasamuttejanatthaṁ imesaṁ pāṇātipātādīnaṁ dhammato,",
  "atk-abh02a13:5_1": "koṭṭhāsato,",
  "atk-abh02a13:5_2": "ārammaṇato, vedanāto, mūlato, kammato,",
  "atk-abh02a13:5_3": "sāvajjato,",
  "atk-abh02a13:5_4": "payogato ca vinicchayo veditabbo.",
  "atk-abh02a13:6_0": "Tattha ‘dhammato’ti pañcapete pāṇātipātādayo cetanādhammāva honti.",
  "atk-abh02a13:6_1": "‘Koṭṭhāsato’ pañcapi kammapathā eva.",
  "atk-abh02a13:7_0": "‘Ārammaṇato’ pāṇātipāto jīvitindriyārammaṇo.",
  "atk-abh02a13:7_1": "Adinnādānaṁ sattārammaṇaṁ vā saṅkhārārammaṇaṁ vā.",
  "atk-abh02a13:7_2": "Micchācāro itthipurisārammaṇo.",
  "atk-abh02a13:7_3": "Musāvādo sattārammaṇo vā saṅkhārārammaṇo vā.",
  "atk-abh02a13:7_4": "Surāpānaṁ saṅkhārārammaṇaṁ.",
  "atk-abh02a13:8_0": "‘Vedanāto’ pāṇātipāto dukkhavedano.",
  "atk-abh02a13:8_1": "Adinnādānaṁ tivedanaṁ.",
  "atk-abh02a13:8_2": "Tañhi haṭṭhatuṭṭhassa adinnaṁ ādiyato sukhavedanaṁ hoti,",
  "atk-abh02a13:8_3": "bhītakāle dukkhavedanaṁ,",
  "atk-abh02a13:8_4": "majjhattassa hutvā gaṇhato adukkhamasukhavedanaṁ.",
  "atk-abh02a13:8_5": "Micchācāro sukhavedano vā adukkhamasukhavedano vā.",
  "atk-abh02a13:8_6": "Musāvādo adinnādānaṁ viya tivedano.",
  "atk-abh02a13:8_7": "Surāpānaṁ sukhamajjhattavedanaṁ.",
  "atk-abh02a13:9_0": "‘Mūlato’ pāṇātipāto dosamohamūlo.",
  "atk-abh02a13:9_1": "Adinnādānaṁ kiñcikāle lobhamohamūlaṁ,",
  "atk-abh02a13:9_2": "kiñcikāle dosamohamūlaṁ.",
  "atk-abh02a13:9_3": "Micchācāro lobhamohamūlo.",
  "atk-abh02a13:9_4": "Musāvādo kiñcikāle lobhamohamūlo,",
  "atk-abh02a13:9_5": "kiñcikāle dosamohamūlo.",
  "atk-abh02a13:9_6": "Surāpānaṁ lobhamohamūlaṁ.",
  "atk-abh02a13:10_0": "‘Kammato’ musāvādo cettha vacīkammaṁ. Sesā kāyakammameva.",
  "atk-abh02a13:11_0": "‘Sāvajjato’ pāṇātipāto atthi appasāvajjo,",
  "atk-abh02a13:11_1": "atthi mahāsāvajjo.",
  "atk-abh02a13:11_2": "Tathā adinnādānādīni.",
  "atk-abh02a13:11_3": "Tesaṁ nānākaraṇaṁ heṭṭhā dassitameva.",
  "atk-abh02a13:12_0": "Ayaṁ pana aparo nayo –",
  "atk-abh02a13:12_1": "kunthakipillikassa hi vadho appasāvajjo,",
  "atk-abh02a13:12_2": "tato mahantatarassa mahāsāvajjo;",
  "atk-abh02a13:12_3": "sopi appasāvajjo,",
  "atk-abh02a13:12_4": "tato mahantatarāya sakuṇikāya mahāsāvajjo;",
  "atk-abh02a13:12_5": "tato godhāya,",
  "atk-abh02a13:12_6": "tato sasakassa,",
  "atk-abh02a13:12_7": "tato migassa,",
  "atk-abh02a13:12_8": "tato gavayassa,",
  "atk-abh02a13:12_9": "tato assassa,",
  "atk-abh02a13:12_10": "tato hatthissa vadho mahāsāvajjo,",
  "atk-abh02a13:12_11": "tatopi dussīlamanussassa,",
  "atk-abh02a13:12_12": "tato gorūpasīlakamanussassa,",
  "atk-abh02a13:12_13": "tato saraṇagatassa,",
  "atk-abh02a13:12_14": "tato pañcasikkhāpadikassa,",
  "atk-abh02a13:12_15": "tato sāmaṇerassa,",
  "atk-abh02a13:12_16": "tato puthujjanabhikkhuno,",
  "atk-abh02a13:12_17": "tato sotāpannassa,",
  "atk-abh02a13:12_18": "tato sakadāgāmissa,",
  "atk-abh02a13:12_19": "tato anāgāmissa,",
  "atk-abh02a13:12_20": "tato khīṇāsavassa vadho atimahāsāvajjoyeva.",
  "atk-abh02a13:13_0": "Adinnādānaṁ dussīlassa santake appasāvajjaṁ,",
  "atk-abh02a13:13_1": "tato gorūpasīlakassa santake mahāsāvajjaṁ;",
  "atk-abh02a13:13_2": "tato saraṇagatassa,",
  "atk-abh02a13:13_3": "tato pañcasikkhāpadikassa,",
  "atk-abh02a13:13_4": "tato sāmaṇerassa,",
  "atk-abh02a13:13_5": "tato puthujjanabhikkhuno,",
  "atk-abh02a13:13_6": "tato sotāpannassa,",
  "atk-abh02a13:13_7": "tato sakadāgāmissa,",
  "atk-abh02a13:13_8": "tato anāgāmissa santake mahāsāvajjaṁ,",
  "atk-abh02a13:13_9": "tato khīṇāsavassa santake atimahāsāvajjaṁyeva.",
  "atk-abh02a13:14_0": "Micchācāro dussīlāya itthiyā vītikkame appasāvajjo,",
  "atk-abh02a13:14_1": "tato gorūpasīlakāya mahāsāvajjo;",
  "atk-abh02a13:14_2": "tato saraṇagatāya,",
  "atk-abh02a13:14_3": "pañcasikkhāpadikāya,",
  "atk-abh02a13:14_4": "sāmaṇeriyā,",
  "atk-abh02a13:14_5": "puthujjanabhikkhuniyā,",
  "atk-abh02a13:14_6": "sotāpannāya,",
  "atk-abh02a13:14_7": "sakadāgāminiyā,",
  "atk-abh02a13:14_8": "tato anāgāminiyā vītikkame mahāsāvajjo,",
  "atk-abh02a13:14_9": "khīṇāsavāya pana bhikkhuniyā ekantamahāsāvajjova.",
  "atk-abh02a13:15_0": "Musāvādo kākaṇikamattassa atthāya musākathane appasāvajjo,",
  "atk-abh02a13:15_1": "tato aḍḍhamāsakassa,",
  "atk-abh02a13:15_2": "māsakassa,",
  "atk-abh02a13:15_3": "pañcamāsakassa,",
  "atk-abh02a13:15_4": "aḍḍhakahāpaṇassa,",
  "atk-abh02a13:15_5": "kahāpaṇassa,",
  "atk-abh02a13:15_6": "tato anagghaniyabhaṇḍassa atthāya musākathane mahāsāvajjo,",
  "atk-abh02a13:15_7": "musā kathetvā pana saṅghaṁ bhindantassa ekantamahāsāvajjova.",
  "atk-abh02a13:16_0": "Surāpānaṁ pasatamattassa pāne appasāvajjaṁ,",
  "atk-abh02a13:16_1": "añjalimattassa pāne mahāsāvajjaṁ;",
  "atk-abh02a13:16_2": "kāyacālanasamatthaṁ pana bahuṁ pivitvā gāmaghātanigamaghātakammaṁ karontassa ekantamahāsāvajjameva.",
  "atk-abh02a13:17_0": "Pāṇātipātañhi patvā khīṇāsavassa vadho mahāsāvajjo;",
  "atk-abh02a13:17_1": "adinnādānaṁ patvā khīṇāsavasantakassa haraṇaṁ,",
  "atk-abh02a13:17_2": "micchācāraṁ patvā khīṇāsavāya bhikkhuniyā vītikkamanaṁ,",
  "atk-abh02a13:17_3": "musāvādaṁ patvā musāvādena saṅghabhedo,",
  "atk-abh02a13:17_4": "surāpānaṁ patvā kāyacālanasamatthaṁ bahuṁ pivitvā gāmanigamaghātanaṁ mahāsāvajjaṁ.",
  "atk-abh02a13:17_5": "Sabbehipi panetehi musāvādena saṅghabhedanameva mahāsāvajjaṁ.",
  "atk-abh02a13:17_6": "Tañhi kappaṁ niraye pācanasamatthaṁ mahākibbisaṁ.",
  "atk-abh02a13:18_0": "‘Payogato’ti pāṇātipāto sāhatthikopi hoti āṇattikopi.",
  "atk-abh02a13:18_1": "Tathā adinnādānaṁ.",
  "atk-abh02a13:18_2": "Micchācāramusāvādasurāpānāni sāhatthikānevāti.",
  "atk-abh02a13:19_0": "Evamettha pāṇātipātādīnaṁ dhammādivasena vinicchayaṁ ñatvā pāṇātipātā veramaṇītiādīnampi dhammato,",
  "atk-abh02a13:19_1": "koṭṭhāsato,",
  "atk-abh02a13:19_2": "ārammaṇato, vedanāto, mūlato, kammato, khaṇḍato,",
  "atk-abh02a13:19_3": "samādānato,",
  "atk-abh02a13:19_4": "payogato ca vinicchayo veditabbo.",
  "atk-abh02a13:20_0": "Tattha ‘dhammato’ti pariyāyasīlavasena paṭipāṭiyā pañca cetanādhammāva.",
  "atk-abh02a13:20_1": "‘Koṭṭhāsato’ti pañcapi kammapathā eva.",
  "atk-abh02a13:20_2": "‘Ārammaṇato’ti pāṇātipātā veramaṇī parassa jīvitindriyaṁ ārammaṇaṁ katvā attano veracetanāya viramati.",
  "atk-abh02a13:20_3": "Itarāsupi eseva nayo.",
  "atk-abh02a13:20_4": "Sabbāpi hi etā vītikkamitabbavatthuṁ ārammaṇaṁ katvā veracetanāhiyeva viramanti.",
  "atk-abh02a13:20_5": "‘Vedanāto’ti sabbāpi sukhavedanā vā honti majjhattavedanā vā.",
  "atk-abh02a13:20_6": "‘Mūlato’ti ñāṇasampayuttacittena viramantassa alobhaadosaamohamūlā honti,",
  "atk-abh02a13:20_7": "ñāṇavippayuttacittena viramantassa alobhaadosamūlā honti.",
  "atk-abh02a13:20_8": "‘Kammato’ti musāvādā veramaṇīyevettha vacīkammaṁ;",
  "atk-abh02a13:20_9": "sesā kāyakammaṁ.",
  "atk-abh02a13:20_10": "‘Khaṇḍato’ti gahaṭṭhā yaṁ yaṁ vītikkamanti,",
  "atk-abh02a13:20_11": "taṁ tadeva khaṇḍaṁ hoti bhijjati,",
  "atk-abh02a13:20_12": "avasesaṁ na bhijjati. Kasmā?",
  "atk-abh02a13:20_13": "Gahaṭṭhā hi anibaddhasīlā honti,",
  "atk-abh02a13:20_14": "yaṁ yaṁ sakkonti taṁ tadeva gopenti.",
  "atk-abh02a13:20_15": "Sāmaṇerānaṁ pana ekasmiṁ vītikkamante sabbāni bhijjanti.",
  "atk-abh02a13:20_16": "Na kevalañca etāni,",
  "atk-abh02a13:20_17": "sesasīlānipi bhijjantiyeva.",
  "atk-abh02a13:20_18": "Tesaṁ pana vītikkamo daṇḍakammavatthuko.",
  "atk-abh02a13:20_19": "‘Puna evarūpaṁ na karissāmī’ti daṇḍakamme kate sīlaṁ paripuṇṇaṁ hoti.",
  "atk-abh02a13:20_20": "‘Samādānato’ti sayameva ‘pañca sīlāni adhiṭṭhahāmī’ti adhiṭṭhahantenapi,",
  "atk-abh02a13:20_21": "pāṭiyekkaṁ pāṭiyekkaṁ samādiyantenapi samādiṇṇāni honti.",
  "atk-abh02a13:20_22": "Aññassa santike nisīditvā ‘pañca sīlāni samādiyāmī’ti samādiyantenapi,",
  "atk-abh02a13:20_23": "pāṭiyekkaṁ pāṭiyekkaṁ samādiyantenapi samādinnāneva honti.",
  "atk-abh02a13:20_24": "‘Payogato’ sabbānipi sāhatthikapayogānevāti veditabbāni.",
  "atk-abh02a13:21_0": "712.",
  "atk-abh02a13:21_1": "Idāni yāsaṁ sikkhānaṁ koṭṭhāsabhāvena imāni pañca sikkhāpadāni vuttāni,",
  "atk-abh02a13:21_2": "tāni dassetuṁ katame dhammā sikkhāti ayaṁ sikkhāvāro āraddho.",
  "atk-abh02a13:21_3": "Tattha yasmā sabbepi catubhūmakakusalā dhammā sikkhitabbabhāvato sikkhā,",
  "atk-abh02a13:21_4": "tasmā te dassetuṁ yasmiṁ samaye kāmāvacarantiādi vuttaṁ.",
  "atk-abh02a13:21_5": "Tattha heṭṭhā cittuppādakaṇḍe vuttanayeneva pāḷiṁ vitthāretvā attho veditabbo.",
  "atk-abh02a13:21_6": "Idha pana mukhamattameva dassitanti.",
  "atk-abh02a13:22_0": "Abhidhammabhājanīyavaṇṇanā.",
  "atk-abh02a13:23_0": "3. Pañhāpucchakavaṇṇanā",
  "atk-abh02a13:24_0": "714.",
  "atk-abh02a13:24_1": "Pañhāpucchake pāḷianusāreneva sikkhāpadānaṁ kusalādibhāvo veditabbo.",
  "atk-abh02a13:24_2": "Ārammaṇattikesu pana yāni sikkhāpadāni ettha sattārammaṇānīti vuttāni,",
  "atk-abh02a13:24_3": "tāni yasmā sattoti saṅkhaṁ gate saṅkhāreyeva ārammaṇaṁ karonti,",
  "atk-abh02a13:24_4": "yasmā ca sabbānipi etāni sampattavirativaseneva niddiṭṭhāni,",
  "atk-abh02a13:24_5": "tasmā “parittārammaṇā”ti ca “paccuppannārammaṇā”ti ca vuttaṁ.",
  "atk-abh02a13:24_6": "Yato pana viramati tassa vatthuno accantabahiddhattā sabbesampi bahiddhārammaṇatā veditabbāti.",
  "atk-abh02a13:25_0": "Imasmiṁ pana sikkhāpadavibhaṅge sammāsambuddhena abhidhammabhājanīyepi pañhāpucchakepi lokiyāneva sikkhāpadāni kathitāni.",
  "atk-abh02a13:25_1": "Ubhopi hi ete nayā lokiyattā ekaparicchedā eva.",
  "atk-abh02a13:25_2": "Evamayaṁ sikkhāpadavibhaṅgo dveparivaṭṭaṁ nīharitvāva bhājetvā dassitoti.",
  "atk-abh02a13:26_0": "Sammohavinodaniyā vibhaṅgaṭṭhakathāya",
  "atk-abh02a13:27_0": "Sikkhāpadavibhaṅgavaṇṇanā niṭṭhitā."
}