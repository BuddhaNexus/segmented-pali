{
  "thi-ap8:0.1_0": "Therīapadāna",
  "thi-ap8:0.2_0": "Sumedhāvagga",
  "thi-ap8:0.3_0": "8. Sattuppalamālikātherīapadāna",
  "thi-ap8:1.1_0": "“Nagare aruṇavatiyā,",
  "thi-ap8:1.2_0": "aruṇo nāma khattiyo;",
  "thi-ap8:1.3_0": "Tassa rañño ahuṁ bhariyā,",
  "thi-ap8:1.4_0": "vāritaṁ vārayāmahaṁ.",
  "thi-ap8:2.1_0": "Satta mālā gahetvāna,",
  "thi-ap8:2.2_0": "uppalā devagandhikā;",
  "thi-ap8:2.3_0": "Nisajja pāsādavare,",
  "thi-ap8:2.4_0": "evaṁ cintesi tāvade.",
  "thi-ap8:3.1_0": "‘Kiṁ me imāhi mālāhi,",
  "thi-ap8:3.2_0": "sirasāropitāhi me;",
  "thi-ap8:3.3_0": "Varaṁ me buddhaseṭṭhassa,",
  "thi-ap8:3.4_0": "ñāṇamhi abhiropitaṁ’.",
  "thi-ap8:4.1_0": "Sambuddhaṁ paṭimānentī,",
  "thi-ap8:4.2_0": "dvārāsanne nisīdahaṁ;",
  "thi-ap8:4.3_0": "‘Yadā ehiti sambuddho,",
  "thi-ap8:4.4_0": "pūjayissaṁ mahāmuniṁ’.",
  "thi-ap8:5.1_0": "Kakudho vilasantova,",
  "thi-ap8:5.2_0": "migarājāva kesarī;",
  "thi-ap8:5.3_0": "Bhikkhusaṅghena sahito,",
  "thi-ap8:5.4_0": "āgacchi vīthiyā jino.",
  "thi-ap8:6.1_0": "Buddhassa raṁsiṁ disvāna,",
  "thi-ap8:6.2_0": "haṭṭhā saṁviggamānasā;",
  "thi-ap8:6.3_0": "Dvāraṁ avāpuritvāna,",
  "thi-ap8:6.4_0": "buddhaseṭṭhamapūjayiṁ.",
  "thi-ap8:7.1_0": "Satta uppalapupphāni,",
  "thi-ap8:7.2_0": "parikiṇṇāni ambare;",
  "thi-ap8:7.3_0": "Chadiṁ karonto buddhassa,",
  "thi-ap8:7.4_0": "matthake dhārayanti te.",
  "thi-ap8:8.1_0": "Udaggacittā sumanā,",
  "thi-ap8:8.2_0": "vedajātā katañjalī;",
  "thi-ap8:8.3_0": "Tattha cittaṁ pasādetvā,",
  "thi-ap8:8.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap8:9.1_0": "Mahānelassa chādanaṁ,",
  "thi-ap8:9.2_0": "dhārenti mama muddhani;",
  "thi-ap8:9.3_0": "Dibbagandhaṁ pavāyāmi,",
  "thi-ap8:9.4_0": "sattuppalassidaṁ phalaṁ.",
  "thi-ap8:10.1_0": "Kadāci nīyamānāya,",
  "thi-ap8:10.2_0": "ñātisaṅghena me tadā;",
  "thi-ap8:10.3_0": "Yāvatā parisā mayhaṁ,",
  "thi-ap8:10.4_0": "mahānelaṁ dharīyati.",
  "thi-ap8:11.1_0": "Sattatidevarājūnaṁ,",
  "thi-ap8:11.2_0": "mahesittamakārayiṁ;",
  "thi-ap8:11.3_0": "Sabbattha issarā hutvā,",
  "thi-ap8:11.4_0": "saṁsarāmi bhavābhave.",
  "thi-ap8:12.1_0": "Tesaṭṭhi cakkavattīnaṁ,",
  "thi-ap8:12.2_0": "mahesittamakārayiṁ;",
  "thi-ap8:12.3_0": "Sabbe mamanuvattanti,",
  "thi-ap8:12.4_0": "ādeyyavacanā ahuṁ.",
  "thi-ap8:13.1_0": "Uppalasseva me vaṇṇo,",
  "thi-ap8:13.2_0": "gandho ceva pavāyati;",
  "thi-ap8:13.3_0": "Dubbaṇṇiyaṁ na jānāmi,",
  "thi-ap8:13.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "thi-ap8:14.1_0": "Iddhipādesu kusalā,",
  "thi-ap8:14.2_0": "bojjhaṅgabhāvanāratā;",
  "thi-ap8:14.3_0": "Abhiññāpāramippattā,",
  "thi-ap8:14.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "thi-ap8:15.1_0": "Satipaṭṭhānakusalā,",
  "thi-ap8:15.2_0": "samādhijhānagocarā;",
  "thi-ap8:15.3_0": "Sammappadhānamanuyuttā,",
  "thi-ap8:15.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "thi-ap8:16.1_0": "Vīriyaṁ me dhuradhorayhaṁ,",
  "thi-ap8:16.2_0": "yogakkhemādhivāhanaṁ;",
  "thi-ap8:16.3_0": "Sabbāsavā parikkhīṇā,",
  "thi-ap8:16.4_0": "natthi dāni punabbhavo.",
  "thi-ap8:17.1_0": "Ekatiṁse ito kappe,",
  "thi-ap8:17.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "thi-ap8:17.3_0": "Duggatiṁ nābhijānāmi,",
  "thi-ap8:17.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "thi-ap8:18.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap8:18.2_0": "…pe…",
  "thi-ap8:18.3_0": "viharāmi anāsavā.",
  "thi-ap8:19.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap8:19.2_0": "…pe…",
  "thi-ap8:19.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap8:20.1_0": "Paṭisambhidā catasso,",
  "thi-ap8:20.2_0": "…pe…",
  "thi-ap8:20.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap8:21.1_0": "Itthaṁ sudaṁ sattuppalamālikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap8:22.1_0": "Sattuppalamālikātheriyāpadānaṁ aṭṭhamaṁ."
}