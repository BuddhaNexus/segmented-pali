{
  "thig13.4:0.1_0": "Therīgāthā 13.4",
  "thig13.4:0.2_0": "Vīsatinipāta",
  "thig13.4:0.3_0": "Sundarītherīgāthā",
  "thig13.4:1.1_0": "“Petāni bhoti puttāni,",
  "thig13.4:1.2_0": "khādamānā tuvaṁ pure;",
  "thig13.4:1.3_0": "Tuvaṁ divā ca ratto ca,",
  "thig13.4:1.4_0": "atīva paritappasi.",
  "thig13.4:2.1_0": "Sājja sabbāni khāditvā,",
  "thig13.4:2.2_0": "sataputtāni brāhmaṇī;",
  "thig13.4:2.3_0": "Vāseṭṭhi kena vaṇṇena,",
  "thig13.4:2.4_0": "na bāḷhaṁ paritappasi”.",
  "thig13.4:3.1_0": "“Bahūni puttasatāni,",
  "thig13.4:3.2_0": "ñātisaṅghasatāni ca;",
  "thig13.4:3.3_0": "Khāditāni atītaṁse,",
  "thig13.4:3.4_0": "mama tuyhañca brāhmaṇa.",
  "thig13.4:4.1_0": "Sāhaṁ nissaraṇaṁ ñatvā,",
  "thig13.4:4.2_0": "jātiyā maraṇassa ca;",
  "thig13.4:4.3_0": "Na socāmi na rodāmi,",
  "thig13.4:4.4_0": "na cāpi paritappayiṁ”.",
  "thig13.4:5.1_0": "“Abbhutaṁ vata vāseṭṭhi,",
  "thig13.4:5.2_0": "vācaṁ bhāsasi edisiṁ;",
  "thig13.4:5.3_0": "Kassa tvaṁ dhammamaññāya,",
  "thig13.4:5.4_0": "giraṁ bhāsasi edisiṁ”.",
  "thig13.4:6.1_0": "“Esa brāhmaṇa sambuddho,",
  "thig13.4:6.2_0": "nagaraṁ mithilaṁ pati;",
  "thig13.4:6.3_0": "Sabbadukkhappahānāya,",
  "thig13.4:6.4_0": "dhammaṁ desesi pāṇinaṁ.",
  "thig13.4:7.1_0": "Tassa brahme arahato,",
  "thig13.4:7.2_0": "dhammaṁ sutvā nirūpadhiṁ;",
  "thig13.4:7.3_0": "Tattha viññātasaddhammā,",
  "thig13.4:7.4_0": "puttasokaṁ byapānudiṁ”.",
  "thig13.4:8.1_0": "“So ahampi gamissāmi,",
  "thig13.4:8.2_0": "nagaraṁ mithilaṁ pati;",
  "thig13.4:8.3_0": "Appeva maṁ so bhagavā,",
  "thig13.4:8.4_0": "sabbadukkhā pamocaye”.",
  "thig13.4:9.1_0": "Addasa brāhmaṇo buddhaṁ,",
  "thig13.4:9.2_0": "vippamuttaṁ nirūpadhiṁ;",
  "thig13.4:9.3_0": "Svassa dhammamadesesi,",
  "thig13.4:9.4_0": "muni dukkhassa pāragū.",
  "thig13.4:10.1_0": "Dukkhaṁ dukkhasamuppādaṁ,",
  "thig13.4:10.2_0": "dukkhassa ca atikkamaṁ;",
  "thig13.4:10.3_0": "Ariyaṁ caṭṭhaṅgikaṁ maggaṁ,",
  "thig13.4:10.4_0": "dukkhūpasamagāminaṁ.",
  "thig13.4:11.1_0": "Tattha viññātasaddhammo,",
  "thig13.4:11.2_0": "pabbajjaṁ samarocayi;",
  "thig13.4:11.3_0": "Sujāto tīhi rattīhi,",
  "thig13.4:11.4_0": "tisso vijjā aphassayi.",
  "thig13.4:12.1_0": "“Ehi sārathi gacchāhi,",
  "thig13.4:12.2_0": "rathaṁ niyyādayāhimaṁ;",
  "thig13.4:12.3_0": "Ārogyaṁ brāhmaṇiṁ vajja,",
  "thig13.4:12.4_0": "‘pabbaji dāni brāhmaṇo;",
  "thig13.4:12.5_0": "Sujāto tīhi rattīhi,",
  "thig13.4:12.6_0": "tisso vijjā aphassayi’”.",
  "thig13.4:13.1_0": "Tato ca rathamādāya,",
  "thig13.4:13.2_0": "sahassañcāpi sārathi;",
  "thig13.4:13.3_0": "Ārogyaṁ brāhmaṇiṁvoca,",
  "thig13.4:13.4_0": "“pabbaji dāni brāhmaṇo;",
  "thig13.4:13.5_0": "Sujāto tīhi rattīhi,",
  "thig13.4:13.6_0": "tisso vijjā aphassayi”.",
  "thig13.4:14.1_0": "“Etañcāhaṁ assarathaṁ,",
  "thig13.4:14.2_0": "sahassañcāpi sārathi;",
  "thig13.4:14.3_0": "Tevijjaṁ brāhmaṇaṁ sutvā,",
  "thig13.4:14.4_0": "puṇṇapattaṁ dadāmi te”.",
  "thig13.4:15.1_0": "“Tuyheva hotvassaratho,",
  "thig13.4:15.2_0": "sahassañcāpi brāhmaṇi;",
  "thig13.4:15.3_0": "Ahampi pabbajissāmi,",
  "thig13.4:15.4_0": "varapaññassa santike”.",
  "thig13.4:16.1_0": "“Hatthī gavassaṁ maṇikuṇḍalañca,",
  "thig13.4:16.2_0": "Phītañcimaṁ gahavibhavaṁ pahāya;",
  "thig13.4:16.3_0": "Pitā pabbajito tuyhaṁ,",
  "thig13.4:16.4_0": "Bhuñja bhogāni sundarī;",
  "thig13.4:16.5_0": "Tuvaṁ dāyādikā kule”.",
  "thig13.4:17.1_0": "“Hatthī gavassaṁ maṇikuṇḍalañca,",
  "thig13.4:17.2_0": "Rammaṁ cimaṁ gahavibhavaṁ pahāya;",
  "thig13.4:17.3_0": "Pitā pabbajito mayhaṁ,",
  "thig13.4:17.4_0": "Puttasokena aṭṭito;",
  "thig13.4:17.5_0": "Ahampi pabbajissāmi,",
  "thig13.4:17.6_0": "Bhātusokena aṭṭitā”.",
  "thig13.4:18.1_0": "“So te ijjhatu saṅkappo,",
  "thig13.4:18.2_0": "yaṁ tvaṁ patthesi sundarī;",
  "thig13.4:18.3_0": "Uttiṭṭhapiṇḍo uñcho ca,",
  "thig13.4:18.4_0": "paṁsukūlañca cīvaraṁ;",
  "thig13.4:18.5_0": "Etāni abhisambhontī,",
  "thig13.4:18.6_0": "paraloke anāsavā”.",
  "thig13.4:19.1_0": "“Sikkhamānāya me ayye,",
  "thig13.4:19.2_0": "dibbacakkhu visodhitaṁ;",
  "thig13.4:19.3_0": "Pubbenivāsaṁ jānāmi,",
  "thig13.4:19.4_0": "yattha me vusitaṁ pure.",
  "thig13.4:20.1_0": "Tuvaṁ nissāya kalyāṇi,",
  "thig13.4:20.2_0": "theri saṅghassa sobhane;",
  "thig13.4:20.3_0": "Tisso vijjā anuppattā,",
  "thig13.4:20.4_0": "kataṁ buddhassa sāsanaṁ.",
  "thig13.4:21.1_0": "Anujānāhi me ayye,",
  "thig13.4:21.2_0": "icche sāvatthi gantave;",
  "thig13.4:21.3_0": "Sīhanādaṁ nadissāmi,",
  "thig13.4:21.4_0": "buddhaseṭṭhassa santike”.",
  "thig13.4:22.1_0": "“Passa sundari satthāraṁ,",
  "thig13.4:22.2_0": "hemavaṇṇaṁ harittacaṁ;",
  "thig13.4:22.3_0": "Adantānaṁ dametāraṁ,",
  "thig13.4:22.4_0": "sambuddhamakutobhayaṁ”.",
  "thig13.4:23.1_0": "“Passa sundarimāyantiṁ,",
  "thig13.4:23.2_0": "vippamuttaṁ nirūpadhiṁ;",
  "thig13.4:23.3_0": "Vītarāgaṁ visaṁyuttaṁ,",
  "thig13.4:23.4_0": "katakiccamanāsavaṁ.",
  "thig13.4:24.1_0": "Bārāṇasito nikkhamma,",
  "thig13.4:24.2_0": "tava santikamāgatā;",
  "thig13.4:24.3_0": "Sāvikā te mahāvīra,",
  "thig13.4:24.4_0": "pāde vandati sundarī.",
  "thig13.4:25.1_0": "Tuvaṁ buddho tuvaṁ satthā,",
  "thig13.4:25.2_0": "tuyhaṁ dhītāmhi brāhmaṇa;",
  "thig13.4:25.3_0": "Orasā mukhato jātā,",
  "thig13.4:25.4_0": "katakiccā anāsavā”.",
  "thig13.4:26.1_0": "“Tassā te svāgataṁ bhadde,",
  "thig13.4:26.2_0": "tato te adurāgataṁ;",
  "thig13.4:26.3_0": "Evañhi dantā āyanti,",
  "thig13.4:26.4_0": "satthu pādāni vandikā;",
  "thig13.4:26.5_0": "Vītarāgā visaṁyuttā,",
  "thig13.4:26.6_0": "katakiccā anāsavā”.",
  "thig13.4:27.1_0": "… Sundarī therī …."
}