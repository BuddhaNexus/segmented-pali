{
  "thag5.12:0.1_0": "Theragāthā 5.12",
  "thag5.12:0.2_0": "Pañcakanipāta",
  "thag5.12:0.3_0": "Paṭhamavagga",
  "thag5.12:0.4_0": "Kosiyattheragāthā",
  "thag5.12:1.1_0": "“Yo ve garūnaṁ vacanaññu dhīro,",
  "thag5.12:1.2_0": "Vase ca tamhi janayetha pemaṁ;",
  "thag5.12:1.3_0": "So bhattimā nāma ca hoti paṇḍito,",
  "thag5.12:1.4_0": "Ñatvā ca dhammesu visesi assa.",
  "thag5.12:2.1_0": "Yaṁ āpadā uppatitā uḷārā,",
  "thag5.12:2.2_0": "Nakkhambhayante paṭisaṅkhayantaṁ;",
  "thag5.12:2.3_0": "So thāmavā nāma ca hoti paṇḍito,",
  "thag5.12:2.4_0": "Ñatvā ca dhammesu visesi assa.",
  "thag5.12:3.1_0": "Yo ve samuddova ṭhito anejo,",
  "thag5.12:3.2_0": "Gambhīrapañño nipuṇatthadassī;",
  "thag5.12:3.3_0": "Asaṁhāriyo nāma ca hoti paṇḍito,",
  "thag5.12:3.4_0": "Ñatvā ca dhammesu visesi assa.",
  "thag5.12:4.1_0": "Bahussuto dhammadharo ca hoti,",
  "thag5.12:4.2_0": "Dhammassa hoti anudhammacārī;",
  "thag5.12:4.3_0": "So tādiso nāma ca hoti paṇḍito,",
  "thag5.12:4.4_0": "Ñatvā ca dhammesu visesi assa.",
  "thag5.12:5.1_0": "Atthañca yo jānāti bhāsitassa,",
  "thag5.12:5.2_0": "Atthañca ñatvāna tathā karoti;",
  "thag5.12:5.3_0": "Atthantaro nāma sa hoti paṇḍito,",
  "thag5.12:5.4_0": "Ñatvā ca dhammesu visesi assā”ti.",
  "thag5.12:5.5_0": "… Kosiyo thero ….",
  "thag5.12:5.6_0": "Pañcakanipāto niṭṭhito.",
  "thag5.12:6.0_0": "Tatruddānaṁ",
  "thag5.12:6.1_0": "Rājadatto subhūto ca,",
  "thag5.12:6.2_0": "girimānandasumanā;",
  "thag5.12:6.3_0": "Vaḍḍho ca kassapo thero,",
  "thag5.12:6.4_0": "gayākassapavakkalī.",
  "thag5.12:7.1_0": "Vijito yasadatto ca,",
  "thag5.12:7.2_0": "soṇo kosiyasavhayo;",
  "thag5.12:7.3_0": "Saṭṭhi ca pañca gāthāyo,",
  "thag5.12:7.4_0": "therā ca ettha dvādasāti."
}