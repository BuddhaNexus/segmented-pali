{
  "anya-e0703n52:0_0": "Tivaññāsatima paccheda",
  "anya-e0703n52:1_0": "Laṁkāviloponāma",
  "anya-e0703n52:2_0": "1.",
  "anya-e0703n52:3_0": "Mahindo taṁ kaṇiṭṭho so, rājaputto tadaccaye;",
  "anya-e0703n52:4_0": "Ussāpiya setacchatta-manurādhapure vare.",
  "anya-e0703n52:5_0": "2.",
  "anya-e0703n52:6_0": "Sena senānīnā’nīta desantarajanā kule;",
  "anya-e0703n52:7_0": "Tattha vāsamakappesi, kicchena dasavacchare.",
  "anya-e0703n52:8_0": "3.",
  "anya-e0703n52:9_0": "Apetanīti maggassa, mudubhūtassa sabbaso;",
  "anya-e0703n52:10_0": "Uppādabhāgaṁ nādaṁsu, tassa jānapadā tadā.",
  "anya-e0703n52:11_0": "4.",
  "anya-e0703n52:12_0": "Accantaṁ khīṇacitto so, vassamhi dasame vibhū;",
  "anya-e0703n52:13_0": "Vuttidānena nāsakkhi, saṅgahetuṁ sakaṁ balaṁ.",
  "anya-e0703n52:14_0": "5.",
  "anya-e0703n52:15_0": "Aladdha vuttino sabbe, keraḷā sahitā tato;",
  "anya-e0703n52:16_0": "Na vuttidānaṁ no yāva, hoti mātāva bhuñjatu.",
  "anya-e0703n52:17_0": "6.",
  "anya-e0703n52:18_0": "Iti rājagharadvāre, sāhasekarasā bhusaṁ;",
  "anya-e0703n52:19_0": "Cāpahatā nisīdiṁsu, sannaddhachurikāyudhā.",
  "anya-e0703n52:20_0": "7.",
  "anya-e0703n52:21_0": "Hatthasāraṁ samādāya, te vivañciya bhūpati;",
  "anya-e0703n52:22_0": "Ummaggato viniggamma, turito rohaṇaṁ agā.",
  "anya-e0703n52:23_0": "8.",
  "anya-e0703n52:24_0": "Sīdupabbatagāmamhi, khandhavāraṁ nibandhiya;",
  "anya-e0703n52:25_0": "Bhātu jāyamma hesitte, ṭhapetvā so tahiṁ vasī.",
  "anya-e0703n52:26_0": "9.",
  "anya-e0703n52:27_0": "Na cirasseva tassāya, matā yasamahīpati;",
  "anya-e0703n52:28_0": "Mahesitte nivesesi, sakabhātussa dhītaraṁ.",
  "anya-e0703n52:29_0": "10.",
  "anya-e0703n52:30_0": "Deviyā tāya sañjāte, sute kassapanāmake;",
  "anya-e0703n52:31_0": "Ajjhāvuttaṁ vihāyā’tha, khandhāvāraṁ mahīmati.",
  "anya-e0703n52:32_0": "11.",
  "anya-e0703n52:33_0": "Kārayitvāna nagaraṁ, kappagallakagāmake;",
  "anya-e0703n52:34_0": "Adhipaccaṁ pavattento, rohaṇe suciraṁ vasī.",
  "anya-e0703n52:35_0": "12.",
  "anya-e0703n52:36_0": "Tato sesesu ṭhānesu, keraḷā sīhaḷā tadā;",
  "anya-e0703n52:37_0": "Kaṇṇāṭā ca yathākāma-mādhipaccaṁ pavattayuṁ.",
  "anya-e0703n52:38_0": "13.",
  "anya-e0703n52:39_0": "Athassa vāṇijo eko, paratīraṁ idhāgato;",
  "anya-e0703n52:40_0": "Gantvā pavattiṁ laṁkāya, coḷarañño nivedayi.",
  "anya-e0703n52:41_0": "14.",
  "anya-e0703n52:42_0": "Sotaṁ suṇitvā pesesi, laṁkāgahaṇamānaso;",
  "anya-e0703n52:43_0": "Balaṁ mahantaṁ balavā, taṁ khippaṁ laṁkamotari.",
  "anya-e0703n52:44_0": "15.",
  "anya-e0703n52:45_0": "Paṭṭhāyo tiṇṇaṭhānamhā, viheṭhentaṁ bahū jane;",
  "anya-e0703n52:46_0": "Anukkamena taṁ coḷa-balaṁ rohaṇamajjhagā.",
  "anya-e0703n52:47_0": "16.",
  "anya-e0703n52:48_0": "Chattiṁse rājino vasse, mahesiṁ ratanāni ca;",
  "anya-e0703n52:49_0": "Makuṭañca kamāyātaṁ, sabbamābharaṇaṁ tathā.",
  "anya-e0703n52:50_0": "17.",
  "anya-e0703n52:51_0": "Amūlikañcavajira-valayaṁ devadattiyaṁ;",
  "anya-e0703n52:52_0": "Acchejjacchurikaṁ chinna-paṭṭikā dhātukañca te.",
  "anya-e0703n52:53_0": "18.",
  "anya-e0703n52:54_0": "Paviṭṭhaṁ vanaduggamhi, bhayātañca mahīpatiṁ;",
  "anya-e0703n52:55_0": "Jīvaggāhamagaṇhiṁsu, sandhilesampadassiya.",
  "anya-e0703n52:56_0": "19.",
  "anya-e0703n52:57_0": "Mahīpālaṁ dhanaṁ tañca, sabbaṁ hatthagataṁ tato;",
  "anya-e0703n52:58_0": "Pesayiṁsu lahuṁ coḷa-mahīpālassa santikaṁ.",
  "anya-e0703n52:59_0": "20.",
  "anya-e0703n52:60_0": "Nikāyattitaye dhātu-gabbhe laṁkātale khile;",
  "anya-e0703n52:61_0": "Mahārahe suvaṇṇādi-paṭibimbe ca’nappake.",
  "anya-e0703n52:62_0": "21.",
  "anya-e0703n52:63_0": "Bhinditvā sahasā sabbe, vihāre ca tahiṁ tahiṁ;",
  "anya-e0703n52:64_0": "Yatho johārino yakkhā, laṅkāyaṁ sāramaggahuṁ.",
  "anya-e0703n52:65_0": "22.",
  "anya-e0703n52:66_0": "Te coḷā rājaraṭṭhaṁ taṁ, pulatthipuranissitā;",
  "anya-e0703n52:67_0": "Rakkhapāsāṇakaṇḍavha, ṭhānāvadhimabhuñjisuṁ.",
  "anya-e0703n52:68_0": "23.",
  "anya-e0703n52:69_0": "Taṁ kumārakamādāya, kassapaṁ raṭṭhavāsino;",
  "anya-e0703n52:70_0": "Vaḍḍhenti coḷabhayato, gopayantā susādarā.",
  "anya-e0703n52:71_0": "24.",
  "anya-e0703n52:72_0": "Coḷarājā kumāraṁ taṁ, sutvā dvādasavassikaṁ;",
  "anya-e0703n52:73_0": "Gahaṇatthāya pesesi, mahāmacce mahābale.",
  "anya-e0703n52:74_0": "25.",
  "anya-e0703n52:75_0": "Ūnaṁ pañcasahassena, yodhalakkhaṁ samādiya;",
  "anya-e0703n52:76_0": "Sabbaṁ te rohaṇaṁ desaṁ, saṅkhobhesu mito tato.",
  "anya-e0703n52:77_0": "26.",
  "anya-e0703n52:78_0": "Kittināmo’tha sacivo, makkhakudrūsavāsiko;",
  "anya-e0703n52:79_0": "Muddhanāmo tathāmacco, māragallakavāsiko.",
  "anya-e0703n52:80_0": "27.",
  "anya-e0703n52:81_0": "Ubhopi te mahāvīrā, yuddhopāyavicakkhaṇā;",
  "anya-e0703n52:82_0": "Coḷasenaṁ vināsetu-maccantakatanicchayā.",
  "anya-e0703n52:83_0": "28.",
  "anya-e0703n52:84_0": "Paluṭṭhagirināmamhi, ṭhāne dugge nivesiya;",
  "anya-e0703n52:85_0": "Katvā chamāsaṁ saṅgāmaṁ, haniṁsu damiḷe bahūṁ.",
  "anya-e0703n52:86_0": "29.",
  "anya-e0703n52:87_0": "Hatāvasiṭṭhā coḷātā, raṇe tasmiṁ bhayadditā;",
  "anya-e0703n52:88_0": "Palāyitvā yathāpubbaṁ, pulattipuramāvasuṁ.",
  "anya-e0703n52:89_0": "30.",
  "anya-e0703n52:90_0": "Kumāro jayito disvā, ubho te sacive tadā;",
  "anya-e0703n52:91_0": "Haṭṭhatuṭṭho “varaṁ tātā, gaṇhathā”ti sa cabravī.",
  "anya-e0703n52:92_0": "31.",
  "anya-e0703n52:93_0": "Buddho paveṇigāmaṁ so, varaṁ yācittha kittiko;",
  "anya-e0703n52:94_0": "Saṅghikaṁ gahitaṁ bhāgaṁ, vissajjetuṁ varaṁ vari.",
  "anya-e0703n52:95_0": "32.",
  "anya-e0703n52:96_0": "Rājaputtavarāladdha-varā’maccavarā tadā;",
  "anya-e0703n52:97_0": "Niddarā sādarā vīrā, pāde vandiṁsu tassa te.",
  "anya-e0703n52:98_0": "33.",
  "anya-e0703n52:99_0": "Rājā dvādasavassāni, vasitvā coḷamaṇḍale;",
  "anya-e0703n52:100_0": "Aṭṭhatālīsavassamhi, mahindo so divaṁgato.",
  "anya-e0703n52:101_0": "34.",
  "anya-e0703n52:102_0": "Pamāda dosānagatena evaṁ,",
  "anya-e0703n52:103_0": "Laddhā’pi bhogānanathirā bhavanti;",
  "anya-e0703n52:104_0": "Iccappamaṁdaṁ hitamāsasāno,",
  "anya-e0703n52:105_0": "Niccaṁ suviññūsusamā careyya.",
  "anya-e0703n52:106_0": "Sujanappasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n52:107_0": "Laṁkāvilopo nāma",
  "anya-e0703n52:108_0": "Tipaññāsatimo paricchedo."
}