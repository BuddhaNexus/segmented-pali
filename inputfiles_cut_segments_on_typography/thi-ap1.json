{
  "thi-ap1:0.1_0": "Therīapadāna",
  "thi-ap1:0.2_0": "Sumedhāvagga",
  "thi-ap1:0.3_0": "1. Sumedhātherīapadāna",
  "thi-ap1:1.1_0": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
  "thi-ap1:2.1_0": "Atha therikāpadānāni suṇātha—",
  "thi-ap1:3.1_0": "“Bhagavati koṇāgamane,",
  "thi-ap1:3.2_0": "Saṅghārāmamhi navanivesanamhi;",
  "thi-ap1:3.3_0": "Sakhiyo tisso janiyo,",
  "thi-ap1:3.4_0": "Vihāradānaṁ adāsimha.",
  "thi-ap1:4.1_0": "Dasakkhattuṁ satakkhattuṁ,",
  "thi-ap1:4.2_0": "Dasasatakkhattuṁ satānañca satakkhattuṁ;",
  "thi-ap1:4.3_0": "Devesu upapajjimha,",
  "thi-ap1:4.4_0": "Ko vādo mānuse bhave.",
  "thi-ap1:5.1_0": "Deve mahiddhikā ahumha,",
  "thi-ap1:5.2_0": "mānusakamhi ko vādo;",
  "thi-ap1:5.3_0": "Sattaratanamahesī,",
  "thi-ap1:5.4_0": "itthiratanaṁ ahaṁ bhaviṁ.",
  "thi-ap1:6.1_0": "Idha sañcitakusalā,",
  "thi-ap1:6.2_0": "susamiddhakulappajā;",
  "thi-ap1:6.3_0": "Dhanañjānī ca khemā ca,",
  "thi-ap1:6.4_0": "ahampi ca tayo janā.",
  "thi-ap1:7.1_0": "Ārāmaṁ sukataṁ katvā,",
  "thi-ap1:7.2_0": "sabbāvayavamaṇḍitaṁ;",
  "thi-ap1:7.3_0": "Buddhappamukhasaṅghassa,",
  "thi-ap1:7.4_0": "niyyādetvā samoditā.",
  "thi-ap1:8.1_0": "Yattha yatthūpapajjāmi,",
  "thi-ap1:8.2_0": "tassa kammassa vāhasā;",
  "thi-ap1:8.3_0": "Devesu aggataṁ pattā,",
  "thi-ap1:8.4_0": "manussesu tatheva ca.",
  "thi-ap1:9.1_0": "Imasmiṁyeva kappamhi,",
  "thi-ap1:9.2_0": "brahmabandhu mahāyaso;",
  "thi-ap1:9.3_0": "Kassapo nāma gottena,",
  "thi-ap1:9.4_0": "uppajji vadataṁ varo.",
  "thi-ap1:10.1_0": "Upaṭṭhāko mahesissa,",
  "thi-ap1:10.2_0": "tadā āsi narissaro;",
  "thi-ap1:10.3_0": "Kāsirājā kikī nāma,",
  "thi-ap1:10.4_0": "bārāṇasipuruttame.",
  "thi-ap1:11.1_0": "Tassāsuṁ satta dhītaro,",
  "thi-ap1:11.2_0": "rājakaññā sukhedhitā;",
  "thi-ap1:11.3_0": "Buddhopaṭṭhānaniratā,",
  "thi-ap1:11.4_0": "brahmacariyaṁ cariṁsu tā.",
  "thi-ap1:12.1_0": "Tāsaṁ sahāyikā hutvā,",
  "thi-ap1:12.2_0": "sīlesu susamāhitā;",
  "thi-ap1:12.3_0": "Datvā dānāni sakkaccaṁ,",
  "thi-ap1:12.4_0": "agāreva vataṁ cariṁ.",
  "thi-ap1:13.1_0": "Tena kammena sukatena,",
  "thi-ap1:13.2_0": "cetanāpaṇidhīhi ca;",
  "thi-ap1:13.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap1:13.4_0": "tāvatiṁsūpagā ahaṁ.",
  "thi-ap1:14.1_0": "Tato cutā yāmamagaṁ,",
  "thi-ap1:14.2_0": "tatohaṁ tusitaṁ gatā;",
  "thi-ap1:14.3_0": "Tato ca nimmānaratiṁ,",
  "thi-ap1:14.4_0": "vasavattipuraṁ tato.",
  "thi-ap1:15.1_0": "Yattha yatthūpapajjāmi,",
  "thi-ap1:15.2_0": "puññakammasamohitā;",
  "thi-ap1:15.3_0": "Tattha tattheva rājūnaṁ,",
  "thi-ap1:15.4_0": "mahesittamakārayiṁ.",
  "thi-ap1:16.1_0": "Tato cutā manussatte,",
  "thi-ap1:16.2_0": "rājūnaṁ cakkavattinaṁ;",
  "thi-ap1:16.3_0": "Maṇḍalīnañca rājūnaṁ,",
  "thi-ap1:16.4_0": "mahesittamakārayiṁ.",
  "thi-ap1:17.1_0": "Sampattimanubhotvāna,",
  "thi-ap1:17.2_0": "devesu mānusesu ca;",
  "thi-ap1:17.3_0": "Sabbattha sukhitā hutvā,",
  "thi-ap1:17.4_0": "nekajātīsu saṁsariṁ.",
  "thi-ap1:18.1_0": "So hetu ca so pabhavo,",
  "thi-ap1:18.2_0": "Tammūlaṁ sāsane khamaṁ;",
  "thi-ap1:18.3_0": "Paṭhamaṁ taṁ samodhānaṁ,",
  "thi-ap1:18.4_0": "Taṁ dhammaratāya nibbānaṁ.",
  "thi-ap1:19.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap1:19.2_0": "bhavā sabbe samūhatā;",
  "thi-ap1:19.3_0": "Nāgīva bandhanaṁ chetvā,",
  "thi-ap1:19.4_0": "viharāmi anāsavā.",
  "thi-ap1:20.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap1:20.2_0": "buddhaseṭṭhassa santike;",
  "thi-ap1:20.3_0": "Tisso vijjā anuppattā,",
  "thi-ap1:20.4_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap1:21.1_0": "Paṭisambhidā catasso,",
  "thi-ap1:21.2_0": "vimokkhāpi ca aṭṭhime;",
  "thi-ap1:21.3_0": "Chaḷabhiññā sacchikatā,",
  "thi-ap1:21.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap1:22.1_0": "Itthaṁ sudaṁ sumedhā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap1:23.1_0": "Sumedhātheriyāpadānaṁ paṭhamaṁ."
}