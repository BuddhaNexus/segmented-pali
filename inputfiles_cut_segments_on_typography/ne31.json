{
  "ne31:0.1_0": "Netti",
  "ne31:0.2_0": "Paṭiniddesavāra",
  "ne31:0.3_0": "Sampāta 12",
  "ne31:0.4_0": "Otaraṇahārasampāta",
  "ne31:1.1_0": "Tattha katamo otaraṇo hārasampāto?",
  "ne31:2.1_0": "“Tasmā rakkhitacittassa, sammāsaṅkappagocaro”ti gāthā.",
  "ne31:2.2_0": "“Tasmā rakkhitacittassa, sammāsaṅkappagocaro”.",
  "ne31:2.3_0": "“Sammādiṭṭhipurekkhāro”ti sammādiṭṭhiyā gahitāya gahitāni bhavanti pañcindriyāni,",
  "ne31:2.3_1": "ayaṁ indriyehi otaraṇā.",
  "ne31:3.1_0": "Tāniyeva indriyāni vijjā,",
  "ne31:3.1_1": "vijjuppādā avijjānirodho,",
  "ne31:3.1_2": "avijjānirodhā saṅkhāranirodho,",
  "ne31:3.1_3": "saṅkhāranirodhā viññāṇanirodho,",
  "ne31:3.1_4": "evaṁ sabbaṁ,",
  "ne31:3.1_5": "ayaṁ paṭiccasamuppādena otaraṇā.",
  "ne31:4.1_0": "Tāniyeva pañcindriyāni tīhi khandhehi saṅgahitāni—",
  "ne31:4.2_0": "sīlakkhandhena samādhikkhandhena paññākkhandhena.",
  "ne31:4.3_0": "Ayaṁ khandhehi otaraṇā.",
  "ne31:5.1_0": "Tāni yeva pañcindriyāni saṅkhārapariyāpannāni.",
  "ne31:5.2_0": "Ye saṅkhārā anāsavā no ca bhavaṅgā, te saṅkhārā dhammadhātusaṅgahitā, ayaṁ dhātūhi otaraṇā.",
  "ne31:6.1_0": "Sā dhammadhātu dhammāyatanapariyāpannā,",
  "ne31:6.1_1": "yaṁ āyatanaṁ anāsavaṁ no ca bhavaṅgaṁ,",
  "ne31:6.1_2": "ayaṁ āyatanehi otaraṇā.",
  "ne31:6.2_0": "Niyutto otaraṇo hārasampāto."
}