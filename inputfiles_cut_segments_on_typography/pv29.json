{
  "pv29:0.1_0": "Petavatthu",
  "pv29:0.2_0": "Cūḷavagga",
  "pv29:0.3_0": "4. Bhusapetavatthu",
  "pv29:1.1_0": "“Bhusāni eko sāliṁ punāparo,",
  "pv29:1.2_0": "Ayañca nārī sakamaṁsalohitaṁ;",
  "pv29:1.3_0": "Tuvañca gūthaṁ asuciṁ akantaṁ,",
  "pv29:1.4_0": "Paribhuñjasi kissa ayaṁ vipāko”ti.",
  "pv29:2.1_0": "“Ayaṁ pure mātaraṁ hiṁsati,",
  "pv29:2.2_0": "Ayaṁ pana kūṭavāṇijo;",
  "pv29:2.3_0": "Ayaṁ maṁsāni khāditvā,",
  "pv29:2.4_0": "Musāvādena vañceti.",
  "pv29:3.1_0": "Ahaṁ manussesu manussabhūtā,",
  "pv29:3.2_0": "Agārinī sabbakulassa issarā;",
  "pv29:3.3_0": "Santesu pariguhāmi,",
  "pv29:3.4_0": "Mā ca kiñci ito adaṁ.",
  "pv29:4.1_0": "Musāvādena chādemi,",
  "pv29:4.2_0": "‘natthi etaṁ mama gehe;",
  "pv29:4.3_0": "Sace santaṁ niguhāmi,",
  "pv29:4.4_0": "gūtho me hotu bhojanaṁ’.",
  "pv29:5.1_0": "Tassa kammassa vipākena,",
  "pv29:5.2_0": "musāvādassa cūbhayaṁ;",
  "pv29:5.3_0": "Sugandhaṁ sālino bhattaṁ,",
  "pv29:5.4_0": "gūthaṁ me parivattati.",
  "pv29:6.1_0": "Avañjhāni ca kammāni,",
  "pv29:6.2_0": "Na hi kammaṁ vinassati;",
  "pv29:6.3_0": "Duggandhaṁ kiminaṁ mīḷaṁ,",
  "pv29:6.4_0": "Bhuñjāmi ca pivāmi cā”ti.",
  "pv29:7.1_0": "Bhusapetavatthu catutthaṁ."
}