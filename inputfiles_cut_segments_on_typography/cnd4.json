{
  "cnd4:0.1_0": "Cūḷaniddesa",
  "cnd4:0.2_0": "Pārāyanavaggagāthā",
  "cnd4:0.3_0": "4. Pārāyanānugītigāthā",
  "cnd4:1.1_0": "“Pārāyanamanugāyissaṁ,",
  "cnd4:1.2_0": "(iccāyasmā piṅgiyo)",
  "cnd4:1.3_0": "Yathāddakkhi tathākkhāsi;",
  "cnd4:1.4_0": "Vimalo bhūrimedhaso,",
  "cnd4:1.5_0": "Nikkāmo nibbano nāgo;",
  "cnd4:1.6_0": "Kissa hetu musā bhaṇe.",
  "cnd4:2.1_0": "Pahīnamalamohassa,",
  "cnd4:2.2_0": "mānamakkhappahāyino;",
  "cnd4:2.3_0": "Handāhaṁ kittayissāmi,",
  "cnd4:2.4_0": "giraṁ vaṇṇūpasañhitaṁ.",
  "cnd4:3.1_0": "Tamonudo buddho samantacakkhu,",
  "cnd4:3.2_0": "Lokantagū sabbabhavātivatto;",
  "cnd4:3.3_0": "Anāsavo sabbadukkhappahīno,",
  "cnd4:3.4_0": "Saccavhayo brahme upāsito me.",
  "cnd4:4.1_0": "Dijo yathā kubbanakaṁ pahāya,",
  "cnd4:4.2_0": "Bahupphalaṁ kānanamāvaseyya;",
  "cnd4:4.3_0": "Evampahaṁ appadasse pahāya,",
  "cnd4:4.4_0": "Mahodadhiṁ haṁsoriva ajjhapatto.",
  "cnd4:5.1_0": "Yeme pubbe viyākaṁsu,",
  "cnd4:5.2_0": "Huraṁ gotamasāsanā;",
  "cnd4:5.3_0": "Iccāsi iti bhavissati,",
  "cnd4:5.4_0": "Sabbaṁ taṁ itihītihaṁ;",
  "cnd4:5.5_0": "Sabbaṁ taṁ takkavaḍḍhanaṁ.",
  "cnd4:6.1_0": "Eko tamonudāsino,",
  "cnd4:6.2_0": "jutimā so pabhaṅkaro;",
  "cnd4:6.3_0": "Gotamo bhūripaññāṇo,",
  "cnd4:6.4_0": "gotamo bhūrimedhaso.",
  "cnd4:7.1_0": "Yo me dhammamadesesi,",
  "cnd4:7.2_0": "Sandiṭṭhikamakālikaṁ;",
  "cnd4:7.3_0": "Taṇhakkhayamanītikaṁ,",
  "cnd4:7.4_0": "Yassa natthi upamā kvaci”.",
  "cnd4:8.1_0": "“Kiṁ nu tamhā vippavasasi,",
  "cnd4:8.2_0": "muhuttamapi piṅgiya;",
  "cnd4:8.3_0": "Gotamā bhūripaññāṇā,",
  "cnd4:8.4_0": "gotamā bhūrimedhasā.",
  "cnd4:9.1_0": "Yo te dhammamadesesi,",
  "cnd4:9.2_0": "Sandiṭṭhikamakālikaṁ;",
  "cnd4:9.3_0": "Taṇhakkhayamanītikaṁ,",
  "cnd4:9.4_0": "Yassa natthi upamā kvaci”.",
  "cnd4:10.1_0": "“Nāhaṁ tamhā vippavasāmi,",
  "cnd4:10.2_0": "Muhuttamapi brāhmaṇa;",
  "cnd4:10.3_0": "Gotamā bhūripaññāṇā,",
  "cnd4:10.4_0": "Gotamā bhūrimedhasā.",
  "cnd4:11.1_0": "Yo me dhammamadesesi,",
  "cnd4:11.2_0": "Sandiṭṭhikamakālikaṁ;",
  "cnd4:11.3_0": "Taṇhakkhayamanītikaṁ,",
  "cnd4:11.4_0": "Yassa natthi upamā kvaci.",
  "cnd4:12.1_0": "Passāmi naṁ manasā cakkhunāva,",
  "cnd4:12.2_0": "Rattindivaṁ brāhmaṇa appamatto;",
  "cnd4:12.3_0": "Namassamāno vivasemi rattiṁ,",
  "cnd4:12.4_0": "Teneva maññāmi avippavāsaṁ.",
  "cnd4:13.1_0": "Saddhā ca pīti ca mano sati ca,",
  "cnd4:13.2_0": "Nāpentime gotamasāsanamhā;",
  "cnd4:13.3_0": "Yaṁ yaṁ disaṁ vajati bhūripañño,",
  "cnd4:13.4_0": "Sa tena teneva natohamasmi.",
  "cnd4:14.1_0": "Jiṇṇassa me dubbalathāmakassa,",
  "cnd4:14.2_0": "Teneva kāyo na paleti tattha;",
  "cnd4:14.3_0": "Saṅkappayantāya vajāmi niccaṁ,",
  "cnd4:14.4_0": "Mano hi me brāhmaṇa tena yutto.",
  "cnd4:15.1_0": "Paṅke sayāno pariphandamāno,",
  "cnd4:15.2_0": "Dīpā dīpaṁ upallaviṁ;",
  "cnd4:15.3_0": "Athaddasāsiṁ sambuddhaṁ,",
  "cnd4:15.4_0": "Oghatiṇṇamanāsavaṁ”.",
  "cnd4:16.1_0": "“Yathā ahū vakkali muttasaddho,",
  "cnd4:16.2_0": "Bhadrāvudho āḷavigotamo ca;",
  "cnd4:16.3_0": "Evameva tvampi pamuñcassu saddhaṁ,",
  "cnd4:16.4_0": "Gamissasi tvaṁ piṅgiya maccudheyyassa pāraṁ”.",
  "cnd4:17.1_0": "“Esa bhiyyo pasīdāmi,",
  "cnd4:17.2_0": "Sutvāna munino vaco;",
  "cnd4:17.3_0": "Vivaṭṭacchado sambuddho,",
  "cnd4:17.4_0": "Akhilo paṭibhānavā.",
  "cnd4:18.1_0": "Adhideve abhiññāya,",
  "cnd4:18.2_0": "Sabbaṁ vedi paroparaṁ;",
  "cnd4:18.3_0": "Pañhānantakaro satthā,",
  "cnd4:18.4_0": "Kaṅkhīnaṁ paṭijānataṁ.",
  "cnd4:19.1_0": "Asaṁhīraṁ asaṅkuppaṁ,",
  "cnd4:19.2_0": "Yassa natthi upamā kvaci;",
  "cnd4:19.3_0": "Addhā gamissāmi na mettha kaṅkhā,",
  "cnd4:19.4_0": "Evaṁ maṁ dhārehi adhimuttacittan”ti.",
  "cnd4:19.5_0": "Pārāyanānugītigāthā niṭṭhitā."
}