{
  "thag17.1:0.1_0": "Theragāthā 17.1",
  "thag17.1:0.2_0": "Tiṁsanipāta",
  "thag17.1:0.3_0": "Paṭhamavagga",
  "thag17.1:0.4_0": "Phussattheragāthā",
  "thag17.1:1.1_0": "Pāsādike bahū disvā,",
  "thag17.1:1.2_0": "bhāvitatte susaṁvute;",
  "thag17.1:1.3_0": "Isi paṇḍarasagotto,",
  "thag17.1:1.4_0": "apucchi phussasavhayaṁ.",
  "thag17.1:2.1_0": "“Kiṁchandā kimadhippāyā,",
  "thag17.1:2.2_0": "kimākappā bhavissare;",
  "thag17.1:2.3_0": "Anāgatamhi kālamhi,",
  "thag17.1:2.4_0": "taṁ me akkhāhi pucchito”.",
  "thag17.1:3.1_0": "“Suṇohi vacanaṁ mayhaṁ,",
  "thag17.1:3.2_0": "isipaṇḍarasavhaya;",
  "thag17.1:3.3_0": "Sakkaccaṁ upadhārehi,",
  "thag17.1:3.4_0": "ācikkhissāmyanāgataṁ.",
  "thag17.1:4.1_0": "Kodhanā upanāhī ca,",
  "thag17.1:4.2_0": "makkhī thambhī saṭhā bahū;",
  "thag17.1:4.3_0": "Ussukī nānāvādā ca,",
  "thag17.1:4.4_0": "bhavissanti anāgate.",
  "thag17.1:5.1_0": "Aññātamānino dhamme,",
  "thag17.1:5.2_0": "gambhīre tīragocarā;",
  "thag17.1:5.3_0": "Lahukā agarū dhamme,",
  "thag17.1:5.4_0": "aññamaññamagāravā.",
  "thag17.1:6.1_0": "Bahū ādīnavā loke,",
  "thag17.1:6.2_0": "uppajjissantyanāgate;",
  "thag17.1:6.3_0": "Sudesitaṁ imaṁ dhammaṁ,",
  "thag17.1:6.4_0": "kilesessanti dummatī.",
  "thag17.1:7.1_0": "Guṇahīnāpi saṅghamhi,",
  "thag17.1:7.2_0": "voharantā visāradā;",
  "thag17.1:7.3_0": "Balavanto bhavissanti,",
  "thag17.1:7.4_0": "mukharā assutāvino.",
  "thag17.1:8.1_0": "Guṇavantopi saṅghamhi,",
  "thag17.1:8.2_0": "voharantā yathātthato;",
  "thag17.1:8.3_0": "Dubbalā te bhavissanti,",
  "thag17.1:8.4_0": "hirīmanā anatthikā.",
  "thag17.1:9.1_0": "Rajataṁ jātarūpañca,",
  "thag17.1:9.2_0": "khettaṁ vatthumajeḷakaṁ;",
  "thag17.1:9.3_0": "Dāsidāsañca dummedhā,",
  "thag17.1:9.4_0": "sādiyissantyanāgate.",
  "thag17.1:10.1_0": "Ujjhānasaññino bālā,",
  "thag17.1:10.2_0": "sīlesu asamāhitā;",
  "thag17.1:10.3_0": "Unnaḷā vicarissanti,",
  "thag17.1:10.4_0": "kalahābhiratā magā.",
  "thag17.1:11.1_0": "Uddhatā ca bhavissanti,",
  "thag17.1:11.2_0": "nīlacīvarapārutā;",
  "thag17.1:11.3_0": "Kuhā thaddhā lapā siṅgī,",
  "thag17.1:11.4_0": "carissantyariyā viya.",
  "thag17.1:12.1_0": "Telasaṇṭhehi kesehi,",
  "thag17.1:12.2_0": "capalā añjanakkhikā;",
  "thag17.1:12.3_0": "Rathiyāya gamissanti,",
  "thag17.1:12.4_0": "dantavaṇṇikapārutā.",
  "thag17.1:13.1_0": "Ajegucchaṁ vimuttehi,",
  "thag17.1:13.2_0": "surattaṁ arahaddhajaṁ;",
  "thag17.1:13.3_0": "Jigucchissanti kāsāvaṁ,",
  "thag17.1:13.4_0": "odātesu samucchitā.",
  "thag17.1:14.1_0": "Lābhakāmā bhavissanti,",
  "thag17.1:14.2_0": "kusītā hīnavīriyā;",
  "thag17.1:14.3_0": "Kicchantā vanapatthāni,",
  "thag17.1:14.4_0": "gāmantesu vasissare.",
  "thag17.1:15.1_0": "Ye ye lābhaṁ labhissanti,",
  "thag17.1:15.2_0": "micchājīvaratā sadā;",
  "thag17.1:15.3_0": "Te teva anusikkhantā,",
  "thag17.1:15.4_0": "bhajissanti asaṁyatā.",
  "thag17.1:16.1_0": "Ye ye alābhino lābhaṁ,",
  "thag17.1:16.2_0": "na te pujjā bhavissare;",
  "thag17.1:16.3_0": "Supesalepi te dhīre,",
  "thag17.1:16.4_0": "sevissanti na te tadā.",
  "thag17.1:17.1_0": "Milakkhurajanaṁ rattaṁ,",
  "thag17.1:17.2_0": "garahantā sakaṁ dhajaṁ;",
  "thag17.1:17.3_0": "Titthiyānaṁ dhajaṁ keci,",
  "thag17.1:17.4_0": "dhārissantyavadātakaṁ.",
  "thag17.1:18.1_0": "Agāravo ca kāsāve,",
  "thag17.1:18.2_0": "tadā tesaṁ bhavissati;",
  "thag17.1:18.3_0": "Paṭisaṅkhā ca kāsāve,",
  "thag17.1:18.4_0": "bhikkhūnaṁ na bhavissati.",
  "thag17.1:19.1_0": "Abhibhūtassa dukkhena,",
  "thag17.1:19.2_0": "sallaviddhassa ruppato;",
  "thag17.1:19.3_0": "Paṭisaṅkhā mahāghorā,",
  "thag17.1:19.4_0": "nāgassāsi acintiyā.",
  "thag17.1:20.1_0": "Chaddanto hi tadā disvā,",
  "thag17.1:20.2_0": "surattaṁ arahaddhajaṁ;",
  "thag17.1:20.3_0": "Tāvadeva bhaṇī gāthā,",
  "thag17.1:20.4_0": "gajo atthopasaṁhitā.",
  "thag17.1:21.1_0": "‘Anikkasāvo kāsāvaṁ,",
  "thag17.1:21.2_0": "yo vatthaṁ paridhassati;",
  "thag17.1:21.3_0": "Apeto damasaccena,",
  "thag17.1:21.4_0": "na so kāsāvamarahati.",
  "thag17.1:22.1_0": "Yo ca vantakasāvassa,",
  "thag17.1:22.2_0": "sīlesu susamāhito;",
  "thag17.1:22.3_0": "Upeto damasaccena,",
  "thag17.1:22.4_0": "sa ve kāsāvamarahati.",
  "thag17.1:23.1_0": "Vipannasīlo dummedho,",
  "thag17.1:23.2_0": "pākaṭo kāmakāriyo;",
  "thag17.1:23.3_0": "Vibbhantacitto nissukko,",
  "thag17.1:23.4_0": "na so kāsāvamarahati.",
  "thag17.1:24.1_0": "Yo ca sīlena sampanno,",
  "thag17.1:24.2_0": "vītarāgo samāhito;",
  "thag17.1:24.3_0": "Odātamanasaṅkappo,",
  "thag17.1:24.4_0": "sa ve kāsāvamarahati.",
  "thag17.1:25.1_0": "Uddhato unnaḷo bālo,",
  "thag17.1:25.2_0": "sīlaṁ yassa na vijjati;",
  "thag17.1:25.3_0": "Odātakaṁ arahati,",
  "thag17.1:25.4_0": "kāsāvaṁ kiṁ karissati.",
  "thag17.1:26.1_0": "Bhikkhū ca bhikkhuniyo ca,",
  "thag17.1:26.2_0": "duṭṭhacittā anādarā;",
  "thag17.1:26.3_0": "Tādīnaṁ mettacittānaṁ,",
  "thag17.1:26.4_0": "niggaṇhissantyanāgate.",
  "thag17.1:27.1_0": "Sikkhāpentāpi therehi,",
  "thag17.1:27.2_0": "bālā cīvaradhāraṇaṁ;",
  "thag17.1:27.3_0": "Na suṇissanti dummedhā,",
  "thag17.1:27.4_0": "pākaṭā kāmakāriyā.",
  "thag17.1:28.1_0": "Te tathā sikkhitā bālā,",
  "thag17.1:28.2_0": "aññamaññaṁ agāravā;",
  "thag17.1:28.3_0": "Nādiyissantupajjhāye,",
  "thag17.1:28.4_0": "khaḷuṅko viya sārathiṁ.",
  "thag17.1:29.1_0": "Evaṁ anāgataddhānaṁ,",
  "thag17.1:29.2_0": "paṭipatti bhavissati;",
  "thag17.1:29.3_0": "Bhikkhūnaṁ bhikkhunīnañca,",
  "thag17.1:29.4_0": "patte kālamhi pacchime.’",
  "thag17.1:30.1_0": "Purā āgacchate etaṁ,",
  "thag17.1:30.2_0": "anāgataṁ mahabbhayaṁ;",
  "thag17.1:30.3_0": "Subbacā hotha sakhilā,",
  "thag17.1:30.4_0": "aññamaññaṁ sagāravā.",
  "thag17.1:31.1_0": "Mettacittā kāruṇikā,",
  "thag17.1:31.2_0": "Hotha sīlesu saṁvutā;",
  "thag17.1:31.3_0": "Āraddhavīriyā pahitattā,",
  "thag17.1:31.4_0": "Niccaṁ daḷhaparakkamā.",
  "thag17.1:32.1_0": "Pamādaṁ bhayato disvā,",
  "thag17.1:32.2_0": "Appamādañca khemato;",
  "thag17.1:32.3_0": "Bhāvethaṭṭhaṅgikaṁ maggaṁ,",
  "thag17.1:32.4_0": "Phusantā amataṁ padan”ti.",
  "thag17.1:32.5_0": "… Phusso thero …."
}