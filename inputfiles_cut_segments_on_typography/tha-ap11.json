{
  "tha-ap11:0.1_0": "Therāpadāna",
  "tha-ap11:0.2_0": "Buddhavagga",
  "tha-ap11:0.3_0": "11. Khadiravaniyarevatattheraapadāna",
  "tha-ap11:1.1_0": "“Gaṅgā bhāgīrathī nāma,",
  "tha-ap11:1.2_0": "himavantā pabhāvitā;",
  "tha-ap11:1.3_0": "Kutitthe nāviko āsiṁ,",
  "tha-ap11:1.4_0": "orime ca tariṁ ahaṁ.",
  "tha-ap11:2.1_0": "Padumuttaro nāyako,",
  "tha-ap11:2.2_0": "sambuddho dvipaduttamo;",
  "tha-ap11:2.3_0": "Vasī satasahassehi,",
  "tha-ap11:2.4_0": "gaṅgātīramupāgato.",
  "tha-ap11:3.1_0": "Bahū nāvā samānetvā,",
  "tha-ap11:3.2_0": "vaḍḍhakīhi susaṅkhataṁ;",
  "tha-ap11:3.3_0": "Nāvāya chadanaṁ katvā,",
  "tha-ap11:3.4_0": "paṭimāniṁ narāsabhaṁ.",
  "tha-ap11:4.1_0": "Āgantvāna ca sambuddho,",
  "tha-ap11:4.2_0": "ārūhi tañca nāvakaṁ;",
  "tha-ap11:4.3_0": "Vārimajjhe ṭhito satthā,",
  "tha-ap11:4.4_0": "imā gāthā abhāsatha.",
  "tha-ap11:5.1_0": "‘Yo so tāresi sambuddhaṁ,",
  "tha-ap11:5.2_0": "saṅghañcāpi anāsavaṁ;",
  "tha-ap11:5.3_0": "Tena cittappasādena,",
  "tha-ap11:5.4_0": "devaloke ramissati.",
  "tha-ap11:6.1_0": "Nibbattissati te byamhaṁ,",
  "tha-ap11:6.2_0": "sukataṁ nāvasaṇṭhitaṁ;",
  "tha-ap11:6.3_0": "Ākāse pupphachadanaṁ,",
  "tha-ap11:6.4_0": "dhārayissati sabbadā.",
  "tha-ap11:7.1_0": "Aṭṭhapaññāsakappamhi,",
  "tha-ap11:7.2_0": "tārako nāma khattiyo;",
  "tha-ap11:7.3_0": "Cāturanto vijitāvī,",
  "tha-ap11:7.4_0": "cakkavattī bhavissati.",
  "tha-ap11:8.1_0": "Sattapaññāsakappamhi,",
  "tha-ap11:8.2_0": "cammako nāma khattiyo;",
  "tha-ap11:8.3_0": "Uggacchantova sūriyo,",
  "tha-ap11:8.4_0": "jotissati mahabbalo.",
  "tha-ap11:9.1_0": "Kappasatasahassamhi,",
  "tha-ap11:9.2_0": "okkākakulasambhavo;",
  "tha-ap11:9.3_0": "Gotamo nāma gottena,",
  "tha-ap11:9.4_0": "satthā loke bhavissati.",
  "tha-ap11:10.1_0": "Tidasā so cavitvāna,",
  "tha-ap11:10.2_0": "manussattaṁ gamissati;",
  "tha-ap11:10.3_0": "Revato nāma nāmena,",
  "tha-ap11:10.4_0": "brahmabandhu bhavissati.",
  "tha-ap11:11.1_0": "Agārā nikkhamitvāna,",
  "tha-ap11:11.2_0": "sukkamūlena codito;",
  "tha-ap11:11.3_0": "Gotamassa bhagavato,",
  "tha-ap11:11.4_0": "sāsane pabbajissati.",
  "tha-ap11:12.1_0": "So pacchā pabbajitvāna,",
  "tha-ap11:12.2_0": "yuttayogo vipassako;",
  "tha-ap11:12.3_0": "Sabbāsave pariññāya,",
  "tha-ap11:12.4_0": "nibbāyissatināsavo’.",
  "tha-ap11:13.1_0": "Vīriyaṁ me dhuradhorayhaṁ,",
  "tha-ap11:13.2_0": "Yogakkhemādhivāhanaṁ;",
  "tha-ap11:13.3_0": "Dhāremi antimaṁ dehaṁ,",
  "tha-ap11:13.4_0": "Sammāsambuddhasāsane.",
  "tha-ap11:14.1_0": "Satasahasse kataṁ kammaṁ,",
  "tha-ap11:14.2_0": "phalaṁ dassesi me idha;",
  "tha-ap11:14.3_0": "Sumutto saravegova,",
  "tha-ap11:14.4_0": "kilese jhāpayī mama.",
  "tha-ap11:15.1_0": "Tato maṁ vananirataṁ,",
  "tha-ap11:15.2_0": "disvā lokantagū muni;",
  "tha-ap11:15.3_0": "Vanavāsibhikkhūnaggaṁ,",
  "tha-ap11:15.4_0": "paññapesi mahāmati.",
  "tha-ap11:16.1_0": "Paṭisambhidā catasso,",
  "tha-ap11:16.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap11:16.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap11:16.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap11:17.1_0": "Itthaṁ sudaṁ āyasmā khadiravaniyo revato thero imā gāthāyo abhāsitthāti.",
  "tha-ap11:18.1_0": "Khadiravaniyarevatattherassāpadānaṁ navamaṁ."
}