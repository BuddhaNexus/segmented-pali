{
  "tha-ap474:0.1_0": "Therāpadāna",
  "tha-ap474:0.2_0": "Naḷamālivagga",
  "tha-ap474:0.3_0": "2. Maṇipūjakattheraapadāna",
  "tha-ap474:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap474:1.2_0": "sabbadhammāna pāragū;",
  "tha-ap474:1.3_0": "Vivekakāmo sambuddho,",
  "tha-ap474:1.4_0": "gacchate anilañjase.",
  "tha-ap474:2.1_0": "Avidūre himavantassa,",
  "tha-ap474:2.2_0": "mahājātassaro ahu;",
  "tha-ap474:2.3_0": "Tattha me bhavanaṁ āsi,",
  "tha-ap474:2.4_0": "puññakammena saṁyutaṁ.",
  "tha-ap474:3.1_0": "Bhavanā abhinikkhamma,",
  "tha-ap474:3.2_0": "addasaṁ lokanāyakaṁ;",
  "tha-ap474:3.3_0": "Indīvaraṁva jalitaṁ,",
  "tha-ap474:3.4_0": "ādittaṁva hutāsanaṁ.",
  "tha-ap474:4.1_0": "Vicinaṁ naddasaṁ pupphaṁ,",
  "tha-ap474:4.2_0": "pūjayissanti nāyakaṁ;",
  "tha-ap474:4.3_0": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap474:4.4_0": "avandiṁ satthuno ahaṁ.",
  "tha-ap474:5.1_0": "Mama sīse maṇiṁ gayha,",
  "tha-ap474:5.2_0": "pūjayiṁ lokanāyakaṁ;",
  "tha-ap474:5.3_0": "Imāya maṇipūjāya,",
  "tha-ap474:5.4_0": "vipāko hotu bhaddako.",
  "tha-ap474:6.1_0": "Padumuttaro lokavidū,",
  "tha-ap474:6.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap474:6.3_0": "Antalikkhe ṭhito satthā,",
  "tha-ap474:6.4_0": "imaṁ gāthaṁ abhāsatha.",
  "tha-ap474:7.1_0": "‘So te ijjhatu saṅkappo,",
  "tha-ap474:7.2_0": "labhassu vipulaṁ sukhaṁ;",
  "tha-ap474:7.3_0": "Imāya maṇipūjāya,",
  "tha-ap474:7.4_0": "anubhohi mahāyasaṁ’.",
  "tha-ap474:8.1_0": "Idaṁ vatvāna bhagavā,",
  "tha-ap474:8.2_0": "jalajuttamanāmako;",
  "tha-ap474:8.3_0": "Agamāsi buddhaseṭṭho,",
  "tha-ap474:8.4_0": "yattha cittaṁ paṇīhitaṁ.",
  "tha-ap474:9.1_0": "Saṭṭhikappāni devindo,",
  "tha-ap474:9.2_0": "devarajjamakārayiṁ;",
  "tha-ap474:9.3_0": "Anekasatakkhattuñca,",
  "tha-ap474:9.4_0": "cakkavattī ahosahaṁ.",
  "tha-ap474:10.1_0": "Pubbakammaṁ sarantassa,",
  "tha-ap474:10.2_0": "devabhūtassa me sato;",
  "tha-ap474:10.3_0": "Maṇi nibbattate mayhaṁ,",
  "tha-ap474:10.4_0": "ālokakaraṇo mamaṁ.",
  "tha-ap474:11.1_0": "Chaḷasītisahassāni,",
  "tha-ap474:11.2_0": "nāriyo me pariggahā;",
  "tha-ap474:11.3_0": "Vicittavatthābharaṇā,",
  "tha-ap474:11.4_0": "āmukkamaṇikuṇḍalā.",
  "tha-ap474:12.1_0": "Aḷārapamhā hasulā,",
  "tha-ap474:12.2_0": "susaññā tanumajjhimā;",
  "tha-ap474:12.3_0": "Parivārenti maṁ niccaṁ,",
  "tha-ap474:12.4_0": "maṇipūjāyidaṁ phalaṁ.",
  "tha-ap474:13.1_0": "Soṇṇamayā maṇimayā,",
  "tha-ap474:13.2_0": "lohitaṅgamayā tathā;",
  "tha-ap474:13.3_0": "Bhaṇḍā me sukatā honti,",
  "tha-ap474:13.4_0": "yadicchasi piḷandhanā.",
  "tha-ap474:14.1_0": "Kūṭāgārā gahārammā,",
  "tha-ap474:14.2_0": "sayanañca mahārahaṁ;",
  "tha-ap474:14.3_0": "Mama saṅkappamaññāya,",
  "tha-ap474:14.4_0": "nibbattanti yadicchakaṁ.",
  "tha-ap474:15.1_0": "Lābhā tesaṁ suladdhañca,",
  "tha-ap474:15.2_0": "ye labhanti upassutiṁ;",
  "tha-ap474:15.3_0": "Puññakkhettaṁ manussānaṁ,",
  "tha-ap474:15.4_0": "osadhaṁ sabbapāṇinaṁ.",
  "tha-ap474:16.1_0": "Mayhampi sukataṁ kammaṁ,",
  "tha-ap474:16.2_0": "yohaṁ adakkhi nāyakaṁ;",
  "tha-ap474:16.3_0": "Vinipātā pamuttomhi,",
  "tha-ap474:16.4_0": "pattomhi acalaṁ padaṁ.",
  "tha-ap474:17.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap474:17.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap474:17.3_0": "Divasañceva rattiñca,",
  "tha-ap474:17.4_0": "āloko hoti me sadā.",
  "tha-ap474:18.1_0": "Tāyeva maṇipūjāya,",
  "tha-ap474:18.2_0": "anubhotvāna sampadā;",
  "tha-ap474:18.3_0": "Ñāṇāloko mayā diṭṭho,",
  "tha-ap474:18.4_0": "pattomhi acalaṁ padaṁ.",
  "tha-ap474:19.1_0": "Satasahassito kappe,",
  "tha-ap474:19.2_0": "yaṁ maṇiṁ abhipūjayiṁ;",
  "tha-ap474:19.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap474:19.4_0": "maṇipūjāyidaṁ phalaṁ.",
  "tha-ap474:20.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap474:20.2_0": "…pe…",
  "tha-ap474:20.3_0": "viharāmi anāsavo.",
  "tha-ap474:21.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap474:21.2_0": "…pe…",
  "tha-ap474:21.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap474:22.1_0": "Paṭisambhidā catasso,",
  "tha-ap474:22.2_0": "…pe…",
  "tha-ap474:22.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap474:23.1_0": "Itthaṁ sudaṁ āyasmā maṇipūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap474:24.1_0": "Maṇipūjakattherassāpadānaṁ dutiyaṁ."
}