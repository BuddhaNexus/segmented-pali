{
  "thag14.2:0.1_0": "Theragāthā 14.2",
  "thag14.2:0.2_0": "Cuddasakanipāta",
  "thag14.2:0.3_0": "Paṭhamavagga",
  "thag14.2:0.4_0": "Godattattheragāthā",
  "thag14.2:1.1_0": "“Yathāpi bhaddo ājañño,",
  "thag14.2:1.2_0": "dhure yutto dhurassaho;",
  "thag14.2:1.3_0": "Mathito atibhārena,",
  "thag14.2:1.4_0": "saṁyugaṁ nātivattati.",
  "thag14.2:2.1_0": "Evaṁ paññāya ye tittā,",
  "thag14.2:2.2_0": "samuddo vārinā yathā;",
  "thag14.2:2.3_0": "Na pare atimaññanti,",
  "thag14.2:2.4_0": "ariyadhammova pāṇinaṁ.",
  "thag14.2:3.1_0": "Kāle kālavasaṁ pattā,",
  "thag14.2:3.2_0": "bhavābhavavasaṁ gatā;",
  "thag14.2:3.3_0": "Narā dukkhaṁ nigacchanti,",
  "thag14.2:3.4_0": "tedha socanti māṇavā.",
  "thag14.2:4.1_0": "Unnatā sukhadhammena,",
  "thag14.2:4.2_0": "dukkhadhammena conatā;",
  "thag14.2:4.3_0": "Dvayena bālā haññanti,",
  "thag14.2:4.4_0": "yathābhūtaṁ adassino.",
  "thag14.2:5.1_0": "Ye ca dukkhe sukhasmiñca,",
  "thag14.2:5.2_0": "majjhe sibbinimaccagū;",
  "thag14.2:5.3_0": "Ṭhitā te indakhīlova,",
  "thag14.2:5.4_0": "na te unnataonatā.",
  "thag14.2:6.1_0": "Na heva lābhe nālābhe,",
  "thag14.2:6.2_0": "na yase na ca kittiyā;",
  "thag14.2:6.3_0": "Na nindāyaṁ pasaṁsāya,",
  "thag14.2:6.4_0": "na te dukkhe sukhamhi ca.",
  "thag14.2:7.1_0": "Sabbattha te na limpanti,",
  "thag14.2:7.2_0": "udabinduva pokkhare;",
  "thag14.2:7.3_0": "Sabbattha sukhitā dhīrā,",
  "thag14.2:7.4_0": "sabbattha aparājitā.",
  "thag14.2:8.1_0": "Dhammena ca alābho yo,",
  "thag14.2:8.2_0": "yo ca lābho adhammiko;",
  "thag14.2:8.3_0": "Alābho dhammiko seyyo,",
  "thag14.2:8.4_0": "yañce lābho adhammiko.",
  "thag14.2:9.1_0": "Yaso ca appabuddhīnaṁ,",
  "thag14.2:9.2_0": "viññūnaṁ ayaso ca yo;",
  "thag14.2:9.3_0": "Ayasova seyyo viññūnaṁ,",
  "thag14.2:9.4_0": "na yaso appabuddhinaṁ.",
  "thag14.2:10.1_0": "Dummedhehi pasaṁsā ca,",
  "thag14.2:10.2_0": "viññūhi garahā ca yā;",
  "thag14.2:10.3_0": "Garahāva seyyo viññūhi,",
  "thag14.2:10.4_0": "yañce bālappasaṁsanā.",
  "thag14.2:11.1_0": "Sukhañca kāmamayikaṁ,",
  "thag14.2:11.2_0": "dukkhañca pavivekiyaṁ;",
  "thag14.2:11.3_0": "Pavivekadukkhaṁ seyyo,",
  "thag14.2:11.4_0": "yañce kāmamayaṁ sukhaṁ.",
  "thag14.2:12.1_0": "Jīvitañca adhammena,",
  "thag14.2:12.2_0": "dhammena maraṇañca yaṁ;",
  "thag14.2:12.3_0": "Maraṇaṁ dhammikaṁ seyyo,",
  "thag14.2:12.4_0": "yañce jīve adhammikaṁ.",
  "thag14.2:13.1_0": "Kāmakopappahīnā ye,",
  "thag14.2:13.2_0": "santacittā bhavābhave;",
  "thag14.2:13.3_0": "Caranti loke asitā,",
  "thag14.2:13.4_0": "natthi tesaṁ piyāpiyaṁ.",
  "thag14.2:14.1_0": "Bhāvayitvāna bojjhaṅge,",
  "thag14.2:14.2_0": "indriyāni balāni ca;",
  "thag14.2:14.3_0": "Pappuyya paramaṁ santiṁ,",
  "thag14.2:14.4_0": "parinibbantināsavā”ti.",
  "thag14.2:14.5_0": "… Godatto thero …",
  "thag14.2:14.6_0": "Cuddasakanipāto niṭṭhito.",
  "thag14.2:15.0_0": "Tatruddānaṁ",
  "thag14.2:15.1_0": "Revato ceva godatto,",
  "thag14.2:15.2_0": "therā dve te mahiddhikā;",
  "thag14.2:15.3_0": "Cuddasamhi nipātamhi,",
  "thag14.2:15.4_0": "gāthāyo aṭṭhavīsatīti."
}