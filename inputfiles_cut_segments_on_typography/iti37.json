{
  "iti37:0.1_0": "Itivuttaka 37",
  "iti37:0.2_0": "Dukanipāta",
  "iti37:0.3_0": "Paṭhamavagga",
  "iti37:0.4_0": "Somanassasutta",
  "iti37:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti37:2.1_0": "“Dvīhi,",
  "iti37:2.1_1": "bhikkhave,",
  "iti37:2.1_2": "dhammehi samannāgato bhikkhu diṭṭheva dhamme sukhasomanassabahulo viharati,",
  "iti37:2.1_3": "yoni cassa āraddhā hoti āsavānaṁ khayāya.",
  "iti37:2.2_0": "Katamehi dvīhi?",
  "iti37:2.3_0": "Saṁvejanīyesu ṭhānesu saṁvejanena, saṁviggassa ca yoniso padhānena.",
  "iti37:2.4_0": "Imehi kho,",
  "iti37:2.4_1": "bhikkhave,",
  "iti37:2.4_2": "dvīhi dhammehi samannāgato bhikkhu diṭṭheva dhamme sukhasomanassabahulo viharati,",
  "iti37:2.4_3": "yoni cassa āraddhā hoti āsavānaṁ khayāyā”ti.",
  "iti37:2.5_0": "Etamatthaṁ bhagavā avoca.",
  "iti37:2.6_0": "Tatthetaṁ iti vuccati:",
  "iti37:3.1_0": "“Saṁvejanīyaṭṭhānesu,",
  "iti37:3.2_0": "saṁvijjetheva paṇḍito;",
  "iti37:3.3_0": "Ātāpī nipako bhikkhu,",
  "iti37:3.4_0": "paññāya samavekkhiya.",
  "iti37:4.1_0": "Evaṁ vihārī ātāpī,",
  "iti37:4.2_0": "santavutti anuddhato;",
  "iti37:4.3_0": "Cetosamathamanuyutto,",
  "iti37:4.4_0": "khayaṁ dukkhassa pāpuṇe”ti.",
  "iti37:5.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti37:5.2_0": "Dasamaṁ.",
  "iti37:5.3_0": "Paṭhamo vaggo.",
  "iti37:6.0_0": "Tassuddānaṁ",
  "iti37:6.1_0": "Dve ca bhikkhū tapanīyā,",
  "iti37:6.2_0": "tapanīyā paratthehi;",
  "iti37:6.3_0": "Ātāpī nakuhanā dve,",
  "iti37:6.4_0": "somanassena te dasāti."
}