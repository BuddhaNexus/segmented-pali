{
  "tha-ap72:0.1_0": "Therāpadāna",
  "tha-ap72:0.2_0": "Sakacintaniyavagga",
  "tha-ap72:0.3_0": "10. Pupphacaṅkoṭiyattheraapadāna",
  "tha-ap72:1.1_0": "“Abhītarūpaṁ sīhaṁva,",
  "tha-ap72:1.2_0": "garuḷaggaṁva pakkhinaṁ;",
  "tha-ap72:1.3_0": "Byagghūsabhaṁva pavaraṁ,",
  "tha-ap72:1.4_0": "abhijātaṁva kesariṁ.",
  "tha-ap72:2.1_0": "Sikhiṁ tilokasaraṇaṁ,",
  "tha-ap72:2.2_0": "anejaṁ aparājitaṁ;",
  "tha-ap72:2.3_0": "Nisinnaṁ samaṇānaggaṁ,",
  "tha-ap72:2.4_0": "bhikkhusaṅghapurakkhataṁ.",
  "tha-ap72:3.1_0": "Caṅkoṭake ṭhapetvāna,",
  "tha-ap72:3.2_0": "anojaṁ pupphamuttamaṁ;",
  "tha-ap72:3.3_0": "Saha caṅkoṭakeneva,",
  "tha-ap72:3.4_0": "buddhaseṭṭhaṁ samokiriṁ.",
  "tha-ap72:4.1_0": "Tena cittappasādena,",
  "tha-ap72:4.2_0": "dvipadinda narāsabha;",
  "tha-ap72:4.3_0": "Pattomhi acalaṁ ṭhānaṁ,",
  "tha-ap72:4.4_0": "hitvā jayaparājayaṁ.",
  "tha-ap72:5.1_0": "Ekattiṁse ito kappe,",
  "tha-ap72:5.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap72:5.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap72:5.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap72:6.1_0": "Sampuṇṇe tiṁsakappamhi,",
  "tha-ap72:6.2_0": "devabhūtisanāmakā;",
  "tha-ap72:6.3_0": "Sattaratanasampannā,",
  "tha-ap72:6.4_0": "pañcāsuṁ cakkavattino.",
  "tha-ap72:7.1_0": "Paṭisambhidā catasso,",
  "tha-ap72:7.2_0": "…pe…",
  "tha-ap72:7.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap72:8.1_0": "Itthaṁ sudaṁ āyasmā pupphacaṅkoṭiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap72:9.1_0": "Pupphacaṅkoṭiyattherassāpadānaṁ dasamaṁ.",
  "tha-ap72:10.1_0": "Sakacintaniyavaggo sattamo.",
  "tha-ap72:11.1_0": "Tassuddānaṁ",
  "tha-ap72:12.1_0": "Sakacintī avopupphī,",
  "tha-ap72:12.2_0": "sapaccāgamanena ca;",
  "tha-ap72:12.3_0": "Parappasādī bhisado,",
  "tha-ap72:12.4_0": "sucinti vatthadāyako.",
  "tha-ap72:13.1_0": "Ambadāyī ca sumano,",
  "tha-ap72:13.2_0": "pupphacaṅkoṭakīpi ca;",
  "tha-ap72:13.3_0": "Gāthekasattati vuttā,",
  "tha-ap72:13.4_0": "gaṇitā atthadassibhi."
}