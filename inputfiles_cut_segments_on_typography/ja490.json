{
  "ja490:0.1_0": "Jātaka",
  "ja490:0.2_0": "Pakiṇṇakanipāta",
  "ja490:0.3_0": "Sālikedāravagga",
  "ja490:0.4_0": "7. Pañcuposathikajātaka",
  "ja490:1.1_0": "“Appossukko dāni tuvaṁ kapota,",
  "ja490:1.2_0": "Vihaṅgama na tava bhojanattho;",
  "ja490:1.3_0": "Khudaṁ pipāsaṁ adhivāsayanto,",
  "ja490:1.4_0": "Kasmā bhavaṁposathiko kapota”.",
  "ja490:2.1_0": "“Ahaṁ pure giddhigato kapotiyā,",
  "ja490:2.2_0": "Asmiṁ padesasmimubho ramāma;",
  "ja490:2.3_0": "Athaggahī sākuṇiko kapotiṁ,",
  "ja490:2.4_0": "Akāmako tāya vinā ahosiṁ.",
  "ja490:3.1_0": "Nānābhavā vippayogena tassā,",
  "ja490:3.2_0": "Manomayaṁ vedana vedayāmi;",
  "ja490:3.3_0": "Tasmā ahaṁposathaṁ pālayāmi,",
  "ja490:3.4_0": "Rāgo mamaṁ mā punarāgamāsi”.",
  "ja490:4.1_0": "“Anujjugāmī uragā dujivha,",
  "ja490:4.2_0": "Dāṭhāvudho ghoravisosi sappa;",
  "ja490:4.3_0": "Khudaṁ pipāsaṁ adhivāsayanto,",
  "ja490:4.4_0": "Kasmā bhavaṁposathiko nu dīgha.",
  "ja490:5.1_0": "Usabho ahū balavā gāmikassa,",
  "ja490:5.2_0": "Calakkakū vaṇṇabalūpapanno;",
  "ja490:5.3_0": "So maṁ akkami taṁ kupito aḍaṁsiṁ,",
  "ja490:5.4_0": "Dukkhābhitunno maraṇaṁ upāgā.",
  "ja490:6.1_0": "Tato janā nikkhamitvāna gāmā,",
  "ja490:6.2_0": "Kanditvā roditvā apakkamiṁsu;",
  "ja490:6.3_0": "Tasmā ahaṁposathaṁ pālayāmi,",
  "ja490:6.4_0": "Kodho mamaṁ mā punarāgamāsi.",
  "ja490:7.1_0": "Matāna maṁsāni bahū susāne,",
  "ja490:7.2_0": "Manuññarūpaṁ tava bhojane taṁ;",
  "ja490:7.3_0": "Khudaṁ pipāsaṁ adhivāsayanto,",
  "ja490:7.4_0": "Kasmā bhavaṁposathiko siṅgāla.",
  "ja490:8.1_0": "Pavisi kucchiṁ mahato gajassa,",
  "ja490:8.2_0": "Kuṇape rato hatthimaṁsesu giddho;",
  "ja490:8.3_0": "Uṇho ca vāto tikhiṇā ca rasmiyo,",
  "ja490:8.4_0": "Te sosayuṁ tassa karīsamaggaṁ.",
  "ja490:9.1_0": "Kiso ca paṇḍū ca ahaṁ bhadante,",
  "ja490:9.2_0": "Na me ahū nikkhamanāya maggo;",
  "ja490:9.3_0": "Mahā ca megho sahasā pavassi,",
  "ja490:9.4_0": "So temayī tassa karīsamaggaṁ.",
  "ja490:10.1_0": "Tato ahaṁ nikkhamisaṁ bhadante,",
  "ja490:10.2_0": "Cando yathā rāhumukhā pamutto;",
  "ja490:10.3_0": "Tasmā ahaṁposathaṁ pālayāmi,",
  "ja490:10.4_0": "Lobho mamaṁ mā punarāgamāsi.",
  "ja490:11.1_0": "Vammīkathūpasmiṁ kipillikāni,",
  "ja490:11.2_0": "Nippothayanto tuvaṁ pure carāsi;",
  "ja490:11.3_0": "Khudaṁ pipāsaṁ adhivāsayanto,",
  "ja490:11.4_0": "Kasmā bhavaṁposathiko nu accha.",
  "ja490:12.1_0": "Sakaṁ niketaṁ atihīḷayāno,",
  "ja490:12.2_0": "Atricchatā mallagāmaṁ agacchiṁ;",
  "ja490:12.3_0": "Tato janā nikkhamitvāna gāmā,",
  "ja490:12.4_0": "Kodaṇḍakena paripothayiṁsu maṁ.",
  "ja490:13.1_0": "So bhinnasīso ruhiramakkhitaṅgo,",
  "ja490:13.2_0": "Paccāgamāsiṁ sakaṁ niketaṁ;",
  "ja490:13.3_0": "Tasmā ahaṁposathaṁ pālayāmi,",
  "ja490:13.4_0": "Atricchatā mā punarāgamāsi”.",
  "ja490:14.1_0": "“Yaṁ no apucchittha tuvaṁ bhadante,",
  "ja490:14.2_0": "Sabbeva byākarimha yathāpajānaṁ;",
  "ja490:14.3_0": "Mayampi pucchāma tuvaṁ bhadante,",
  "ja490:14.4_0": "Kasmā bhavaṁposathiko nu brahme”.",
  "ja490:15.1_0": "“Anūpalitto mama assamamhi,",
  "ja490:15.2_0": "Paccekabuddho muhuttaṁ nisīdi;",
  "ja490:15.3_0": "So maṁ avedī gatimāgatiñca,",
  "ja490:15.4_0": "Nāmañca gottaṁ caraṇañca sabbaṁ.",
  "ja490:16.1_0": "Evampahaṁ vandi na tassa pāde,",
  "ja490:16.2_0": "Na cāpi naṁ mānagatena pucchiṁ;",
  "ja490:16.3_0": "Tasmā ahaṁposathaṁ pālayāmi,",
  "ja490:16.4_0": "Māno mamaṁ mā punarāgamāsī”ti.",
  "ja490:17.1_0": "Pañcuposathikajātakaṁ sattamaṁ."
}