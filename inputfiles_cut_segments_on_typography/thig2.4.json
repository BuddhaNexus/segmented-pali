{
  "thig2.4:0.1_0": "Therīgāthā 2.4",
  "thig2.4:0.2_0": "Dukanipāta",
  "thig2.4:0.3_0": "Aḍḍhakāsitherīgāthā",
  "thig2.4:1.1_0": "“Yāva kāsijanapado,",
  "thig2.4:1.2_0": "suṅko me tatthako ahu;",
  "thig2.4:1.3_0": "Taṁ katvā negamo agghaṁ,",
  "thig2.4:1.4_0": "aḍḍhenagghaṁ ṭhapesi maṁ.",
  "thig2.4:2.1_0": "Atha nibbindahaṁ rūpe,",
  "thig2.4:2.2_0": "nibbindañca virajjahaṁ;",
  "thig2.4:2.3_0": "Mā puna jātisaṁsāraṁ,",
  "thig2.4:2.4_0": "sandhāveyyaṁ punappunaṁ;",
  "thig2.4:2.5_0": "Tisso vijjā sacchikatā,",
  "thig2.4:2.6_0": "kataṁ buddhassa sāsanan”ti.",
  "thig2.4:3.1_0": "… Aḍḍhakāsi therī …."
}