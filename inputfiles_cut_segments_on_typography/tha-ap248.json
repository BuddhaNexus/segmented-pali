{
  "tha-ap248:0.1_0": "Therāpadāna",
  "tha-ap248:0.2_0": "Tuvaradāyakavagga",
  "tha-ap248:0.3_0": "6. Pattadāyakattheraapadāna",
  "tha-ap248:1.1_0": "“Paramena damathena,",
  "tha-ap248:1.2_0": "siddhatthassa mahesino;",
  "tha-ap248:1.3_0": "Pattadānaṁ mayā dinnaṁ,",
  "tha-ap248:1.4_0": "ujubhūtassa tādino.",
  "tha-ap248:2.1_0": "Catunnavutito kappe,",
  "tha-ap248:2.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap248:2.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap248:2.4_0": "pattadānassidaṁ phalaṁ.",
  "tha-ap248:3.1_0": "Paṭisambhidā catasso,",
  "tha-ap248:3.2_0": "…pe…",
  "tha-ap248:3.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap248:4.1_0": "Itthaṁ sudaṁ āyasmā pattadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap248:5.1_0": "Pattadāyakattherassāpadānaṁ chaṭṭhaṁ."
}