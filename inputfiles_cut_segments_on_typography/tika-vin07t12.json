{
  "tika-vin07t12:0_0": "3. Nissaggiyakaṇḍaṁ",
  "tika-vin07t12:1_0": "2. Dutiyanissaggiyādipācittiyasikkhāpadavaṇṇanā",
  "tika-vin07t12:2_0": "733. Nissaggiyesupi paṭhamaṁ uttānameva.",
  "tika-vin07t12:3_0": "740.",
  "tika-vin07t12:3_1": "Dutiye ayyāya dammīti evaṁ paṭiladdhanti nissaṭṭhapaṭiladdhaṁ,",
  "tika-vin07t12:3_2": "nissaṭṭhaṁ paṭilabhitvāpi yaṁ uddissa dāyakehi dinnaṁ,",
  "tika-vin07t12:3_3": "tattheva dātabbaṁ.",
  "tika-vin07t12:3_4": "Tenāha “yathādāneyeva upanetabba”nti.",
  "tika-vin07t12:3_5": "Akālacīvaratā,",
  "tika-vin07t12:3_6": "taṁ ñatvā kālacīvaranti lesena bhājāpanaṁ,",
  "tika-vin07t12:3_7": "paṭilābhoti tīṇi aṅgāni.",
  "tika-vin07t12:4_0": "743.",
  "tika-vin07t12:4_1": "Tatiye metanti mamevetaṁ cīvaraṁ.",
  "tika-vin07t12:4_2": "Upasampannatā,",
  "tika-vin07t12:4_3": "parivattitavikappanupagacīvarassa sakasaññāya acchindanādīti dve aṅgāni.",
  "tika-vin07t12:5_0": "748- 752.",
  "tika-vin07t12:5_1": "Catutthe āhaṭasappiṁ datvāti attano datvā.",
  "tika-vin07t12:5_2": "Yamakaṁ pacitabbanti sappiñca telañca ekato pacitabbaṁ.",
  "tika-vin07t12:5_3": "Lesena gahetukāmatā,",
  "tika-vin07t12:5_4": "aññassa viññatti,",
  "tika-vin07t12:5_5": "paṭilābhoti tīṇi aṅgāni.",
  "tika-vin07t12:6_0": "753.",
  "tika-vin07t12:6_1": "Pañcame sāti thullanandā.",
  "tika-vin07t12:6_2": "Ayanti sikkhamānā.",
  "tika-vin07t12:6_3": "Cetāpetvāti jānāpetvāti idha vuttaṁ,",
  "tika-vin07t12:6_4": "mātikāṭṭhakathāyaṁ pana “attano kappiyabhaṇḍena ‘idaṁ nāma āharā’ti aññaṁ parivattāpetvā”ti vuttaṁ.",
  "tika-vin07t12:7_0": "758. Chaṭṭhe pāvārikassāti dussavāṇijakassa.",
  "tika-vin07t12:8_0": "764. Sattame saññācitakenāti sayaṁ yācitakenapīti attho.",
  "tika-vin07t12:9_0": "769-789. Aṭṭhamato yāvadvādasamā uttānameva.",
  "tika-vin07t12:10_0": "Nissaggiyavaṇṇanānayo niṭṭhito."
}