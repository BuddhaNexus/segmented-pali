{
  "tha-ap489:0.1_0": "Therāpadāna",
  "tha-ap489:0.2_0": "Paṁsukūlavagga",
  "tha-ap489:0.3_0": "7 Pulinuppādakattheraapadāna",
  "tha-ap489:1.1_0": "“Pabbate himavantamhi,",
  "tha-ap489:1.2_0": "devalo nāma tāpaso;",
  "tha-ap489:1.3_0": "Tattha me caṅkamo āsi,",
  "tha-ap489:1.4_0": "amanussehi māpito.",
  "tha-ap489:2.1_0": "Jaṭābhārena bharito,",
  "tha-ap489:2.2_0": "kamaṇḍaludharo sadā;",
  "tha-ap489:2.3_0": "Uttamatthaṁ gavesanto,",
  "tha-ap489:2.4_0": "vipinā nikkhamiṁ tadā.",
  "tha-ap489:3.1_0": "Cullāsītisahassāni,",
  "tha-ap489:3.2_0": "sissā mayhaṁ upaṭṭhahuṁ;",
  "tha-ap489:3.3_0": "Sakakammābhipasutā,",
  "tha-ap489:3.4_0": "vasanti vipine tadā.",
  "tha-ap489:4.1_0": "Assamā abhinikkhamma,",
  "tha-ap489:4.2_0": "akaṁ pulinacetiyaṁ;",
  "tha-ap489:4.3_0": "Nānāpupphaṁ samānetvā,",
  "tha-ap489:4.4_0": "taṁ cetiyamapūjayiṁ.",
  "tha-ap489:5.1_0": "Tattha cittaṁ pasādetvā,",
  "tha-ap489:5.2_0": "assamaṁ pavisāmahaṁ;",
  "tha-ap489:5.3_0": "Sabbe sissā samāgantvā,",
  "tha-ap489:5.4_0": "etamatthaṁ pucchiṁsu maṁ.",
  "tha-ap489:6.1_0": "‘Pulinena kato thūpo,",
  "tha-ap489:6.2_0": "yaṁ tvaṁ deva namassasi;",
  "tha-ap489:6.3_0": "Mayampi ñātumicchāma,",
  "tha-ap489:6.4_0": "puṭṭho ācikkha no tuvaṁ’.",
  "tha-ap489:7.1_0": "‘Niddiṭṭhā nu mantapade,",
  "tha-ap489:7.2_0": "cakkhumanto mahāyasā;",
  "tha-ap489:7.3_0": "Te kho ahaṁ namassāmi,",
  "tha-ap489:7.4_0": "buddhaseṭṭhe mahāyase.",
  "tha-ap489:8.1_0": "Kīdisā te mahāvīrā,",
  "tha-ap489:8.2_0": "sabbaññū lokanāyakā;",
  "tha-ap489:8.3_0": "Kathaṁvaṇṇā kathaṁsīlā,",
  "tha-ap489:8.4_0": "kīdisā te mahāyasā.",
  "tha-ap489:9.1_0": "Bāttiṁsalakkhaṇā buddhā,",
  "tha-ap489:9.2_0": "cattālīsadijāpi ca;",
  "tha-ap489:9.3_0": "Nettā gopakhumā tesaṁ,",
  "tha-ap489:9.4_0": "jiñjukā phalasannibhā.",
  "tha-ap489:10.1_0": "Gacchamānā ca te buddhā,",
  "tha-ap489:10.2_0": "yugamattañca pekkhare;",
  "tha-ap489:10.3_0": "Na tesaṁ jāṇu nadati,",
  "tha-ap489:10.4_0": "sandhisaddo na suyyati.",
  "tha-ap489:11.1_0": "Gacchamānā ca sugatā,",
  "tha-ap489:11.2_0": "uddharantāva gacchare;",
  "tha-ap489:11.3_0": "Paṭhamaṁ dakkhiṇaṁ pādaṁ,",
  "tha-ap489:11.4_0": "buddhānaṁ esa dhammatā.",
  "tha-ap489:12.1_0": "Asambhītā ca te buddhā,",
  "tha-ap489:12.2_0": "migarājāva kesarī;",
  "tha-ap489:12.3_0": "Nevukkaṁsenti attānaṁ,",
  "tha-ap489:12.4_0": "no ca vambhenti pāṇinaṁ.",
  "tha-ap489:13.1_0": "Mānāvamānato muttā,",
  "tha-ap489:13.2_0": "samā sabbesu pāṇisu;",
  "tha-ap489:13.3_0": "Anattukkaṁsakā buddhā,",
  "tha-ap489:13.4_0": "buddhānaṁ esa dhammatā.",
  "tha-ap489:14.1_0": "Uppajjantā ca sambuddhā,",
  "tha-ap489:14.2_0": "ālokaṁ dassayanti te;",
  "tha-ap489:14.3_0": "Chappakāraṁ pakampenti,",
  "tha-ap489:14.4_0": "kevalaṁ vasudhaṁ imaṁ.",
  "tha-ap489:15.1_0": "Passanti nirayañcete,",
  "tha-ap489:15.2_0": "nibbāti nirayo tadā;",
  "tha-ap489:15.3_0": "Pavassati mahāmegho,",
  "tha-ap489:15.4_0": "buddhānaṁ esa dhammatā.",
  "tha-ap489:16.1_0": "Īdisā te mahānāgā,",
  "tha-ap489:16.2_0": "atulā ca mahāyasā;",
  "tha-ap489:16.3_0": "Vaṇṇato anatikkantā,",
  "tha-ap489:16.4_0": "appameyyā tathāgatā’.",
  "tha-ap489:17.1_0": "Anumodiṁsu me vākyaṁ,",
  "tha-ap489:17.2_0": "sabbe sissā sagāravā;",
  "tha-ap489:17.3_0": "Tathā ca paṭipajjiṁsu,",
  "tha-ap489:17.4_0": "yathāsatti yathābalaṁ.",
  "tha-ap489:18.1_0": "Paṭipūjenti pulinaṁ,",
  "tha-ap489:18.2_0": "sakakammābhilāsino;",
  "tha-ap489:18.3_0": "Saddahantā mama vākyaṁ,",
  "tha-ap489:18.4_0": "buddhasakkatamānasā.",
  "tha-ap489:19.1_0": "Tadā cavitvā tusitā,",
  "tha-ap489:19.2_0": "devaputto mahāyaso;",
  "tha-ap489:19.3_0": "Uppajji mātukucchimhi,",
  "tha-ap489:19.4_0": "dasasahassi kampatha.",
  "tha-ap489:20.1_0": "Assamassāvidūramhi,",
  "tha-ap489:20.2_0": "caṅkamamhi ṭhito ahaṁ;",
  "tha-ap489:20.3_0": "Sabbe sissā samāgantvā,",
  "tha-ap489:20.4_0": "āgacchuṁ mama santike.",
  "tha-ap489:21.1_0": "‘Usabhova mahī nadati,",
  "tha-ap489:21.2_0": "migarājāva kūjati;",
  "tha-ap489:21.3_0": "Susumārova saḷati,",
  "tha-ap489:21.4_0": "kiṁ vipāko bhavissati’.",
  "tha-ap489:22.1_0": "‘Yaṁ pakittemi sambuddhaṁ,",
  "tha-ap489:22.2_0": "sikatāthūpasantike;",
  "tha-ap489:22.3_0": "So dāni bhagavā satthā,",
  "tha-ap489:22.4_0": "mātukucchimupāgami’.",
  "tha-ap489:23.1_0": "Tesaṁ dhammakathaṁ vatvā,",
  "tha-ap489:23.2_0": "kittayitvā mahāmuniṁ;",
  "tha-ap489:23.3_0": "Uyyojetvā sake sisse,",
  "tha-ap489:23.4_0": "pallaṅkamābhujiṁ ahaṁ.",
  "tha-ap489:24.1_0": "Balañca vata me khīṇaṁ,",
  "tha-ap489:24.2_0": "byādhinā paramena taṁ;",
  "tha-ap489:24.3_0": "Buddhaseṭṭhaṁ saritvāna,",
  "tha-ap489:24.4_0": "tattha kālaṅkato ahaṁ.",
  "tha-ap489:25.1_0": "Sabbe sissā samāgantvā,",
  "tha-ap489:25.2_0": "akaṁsu citakaṁ tadā;",
  "tha-ap489:25.3_0": "Kaḷevarañca me gayha,",
  "tha-ap489:25.4_0": "citakaṁ abhiropayuṁ.",
  "tha-ap489:26.1_0": "Citakaṁ parivāretvā,",
  "tha-ap489:26.2_0": "sīse katvāna añjaliṁ;",
  "tha-ap489:26.3_0": "Sokasallaparetā te,",
  "tha-ap489:26.4_0": "vikkandiṁsu samāgatā.",
  "tha-ap489:27.1_0": "Tesaṁ lālappamānānaṁ,",
  "tha-ap489:27.2_0": "agamaṁ citakaṁ tadā;",
  "tha-ap489:27.3_0": "‘Ahaṁ ācariyo tumhaṁ,",
  "tha-ap489:27.4_0": "mā socittha sumedhasā.",
  "tha-ap489:28.1_0": "Sadatthe vāyameyyātha,",
  "tha-ap489:28.2_0": "rattindivamatanditā;",
  "tha-ap489:28.3_0": "Mā vo pamattā ahuttha,",
  "tha-ap489:28.4_0": "khaṇo vo paṭipādito’.",
  "tha-ap489:29.1_0": "Sake sissenusāsitvā,",
  "tha-ap489:29.2_0": "devalokaṁ punāgamiṁ;",
  "tha-ap489:29.3_0": "Aṭṭhārasa ca kappāni,",
  "tha-ap489:29.4_0": "devaloke ramāmahaṁ.",
  "tha-ap489:30.1_0": "Satānaṁ pañcakkhattuñca,",
  "tha-ap489:30.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap489:30.3_0": "Anekasatakkhattuñca,",
  "tha-ap489:30.4_0": "devarajjamakārayiṁ.",
  "tha-ap489:31.1_0": "Avasesesu kappesu,",
  "tha-ap489:31.2_0": "vokiṇṇo saṁsariṁ ahaṁ;",
  "tha-ap489:31.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap489:31.4_0": "uppādassa idaṁ phalaṁ.",
  "tha-ap489:32.1_0": "Yathā komudike māse,",
  "tha-ap489:32.2_0": "bahū pupphanti pādapā;",
  "tha-ap489:32.3_0": "Tathevāhampi samaye,",
  "tha-ap489:32.4_0": "pupphitomhi mahesinā.",
  "tha-ap489:33.1_0": "Vīriyaṁ me dhuradhorayhaṁ,",
  "tha-ap489:33.2_0": "yogakkhemādhivāhanaṁ;",
  "tha-ap489:33.3_0": "Nāgova bandhanaṁ chetvā,",
  "tha-ap489:33.4_0": "viharāmi anāsavo.",
  "tha-ap489:34.1_0": "Satasahassito kappe,",
  "tha-ap489:34.2_0": "yaṁ buddhamabhikittayiṁ;",
  "tha-ap489:34.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap489:34.4_0": "kittanāya idaṁ phalaṁ.",
  "tha-ap489:35.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap489:35.2_0": "…pe…",
  "tha-ap489:35.3_0": "viharāmi anāsavo.",
  "tha-ap489:36.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap489:36.2_0": "…pe…",
  "tha-ap489:36.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap489:37.1_0": "Paṭisambhidā catasso,",
  "tha-ap489:37.2_0": "…pe…",
  "tha-ap489:37.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap489:38.1_0": "Itthaṁ sudaṁ āyasmā pulinuppādako thero imā gāthāyo abhāsitthāti.",
  "tha-ap489:39.1_0": "Pulinuppādakattherassāpadānaṁ sattamaṁ."
}