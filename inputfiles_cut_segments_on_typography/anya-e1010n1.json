{
  "anya-e1010n1:0_0": "1. Buddhānussati niddesa",
  "anya-e1010n1:1_0": "1.",
  "anya-e1010n1:2_0": "Arahaṁ sammāsambuddho, vijjakkhi caraṇappado;",
  "anya-e1010n1:3_0": "Sugato sugado satthā, sabbaññū bhagavādamo.",
  "anya-e1010n1:4_0": "2.",
  "anya-e1010n1:5_0": "Ārakattārihantattā, pāpākārakatoraho;",
  "anya-e1010n1:6_0": "Hata cakkārato pūjā, rahattā cārahaṁ name.",
  "anya-e1010n1:7_0": "3.",
  "anya-e1010n1:8_0": "Samutte jiya gihīnaṁ, anupubbikatho jino;",
  "anya-e1010n1:9_0": "Adāsi paramaṁ tuṭṭhiṁ, saccāni dassayaṁ divā.",
  "anya-e1010n1:10_0": "4.",
  "anya-e1010n1:11_0": "Bhikkhūnaṁ paṭhame yāme, pāyesi amatāgadaṁ;",
  "anya-e1010n1:12_0": "Jātikhettāga devānaṁ, kaṅkhacchedo sa majjhime;",
  "anya-e1010n1:13_0": "5.",
  "anya-e1010n1:14_0": "Ādo phalasukhaṁ vedi, majjhe seyya makā jino;",
  "anya-e1010n1:15_0": "Veneyyo lokanaṁ ante, pacchimepi tidhā kate.",
  "anya-e1010n1:16_0": "6.",
  "anya-e1010n1:17_0": "Khedaṁ agaṇayaṁ nātho, pañca buddhakataṁ vahaṁ;",
  "anya-e1010n1:18_0": "Satthasiddho paratthaṁva, byāvaṭo sumahādayo.",
  "anya-e1010n1:19_0": "7.",
  "anya-e1010n1:20_0": "Caṅkamitvā nisīditvā, rattiṁdivañca jhāyituṁ;",
  "anya-e1010n1:21_0": "Supituṁ majjhayāmeva, buddho bhikkhūna movadi.",
  "anya-e1010n1:22_0": "8.",
  "anya-e1010n1:23_0": "Nāla mālasituṁ tassa, mahāvīrassa sāsane;",
  "anya-e1010n1:24_0": "Pamādāya munindassa, kataññū sādhu sammato.",
  "anya-e1010n1:25_0": "9.",
  "anya-e1010n1:26_0": "Anaññātassa ñātāya, apattassaca pattiyā;",
  "anya-e1010n1:27_0": "Ārabhetuṁva no yutto, appamatto rahogato.",
  "anya-e1010n1:28_0": "10.",
  "anya-e1010n1:29_0": "Ārabbhatha nikkamatha, yuñjatha buddhasāsane;",
  "anya-e1010n1:30_0": "Dhunātha maccuno senaṁ, naḷāgāraṁva kuñjaro.",
  "anya-e1010n1:31_0": "11.",
  "anya-e1010n1:32_0": "Yo imasmiṁ dhammavinaye, appamatto vihissati;",
  "anya-e1010n1:33_0": "Pahāya jāti saṁsāraṁ, dukkhassantaṁ karissati;",
  "anya-e1010n1:34_0": "12.",
  "anya-e1010n1:35_0": "Iti uyyojanaṁ mhākaṁ, muttassa muttiyā saraṁ;",
  "anya-e1010n1:36_0": "Nayuttova pamādāya, mahādayassa satthuno.",
  "anya-e1010n1:37_0": "13.",
  "anya-e1010n1:38_0": "Suttena dubbitakkena, akicca karaṇenavā;",
  "anya-e1010n1:39_0": "Mogha kālakkhayo mando, dukkhassantaṁ kathaṁkare.",
  "anya-e1010n1:40_0": "14.",
  "anya-e1010n1:41_0": "Ākāsaṁ cakkavāḷañca, sattā buddhaguṇā pica;",
  "anya-e1010n1:42_0": "Anantānāma cattāro, paricchedo navijjati.",
  "anya-e1010n1:43_0": "15.",
  "anya-e1010n1:44_0": "Yathāpi nabha mākāsaṁ, aṅgularajjuyaṭṭhibhi;",
  "anya-e1010n1:45_0": "Minetuṁ neva sakkoti, evaṁ kenaci tagguṇaṁ."
}