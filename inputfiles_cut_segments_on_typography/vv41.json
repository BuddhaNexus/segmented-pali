{
  "vv41:0.1_0": "Vimānavatthu",
  "vv41:0.2_0": "Itthivimāna",
  "vv41:0.3_0": "Mañjiṭṭhakavagga",
  "vv41:0.4_0": "3. Nāgavimānavatthu",
  "vv41:1.1_0": "“Alaṅkatā maṇikañcanācitaṁ,",
  "vv41:1.2_0": "Sovaṇṇajālacitaṁ mahantaṁ;",
  "vv41:1.3_0": "Abhiruyha gajavaraṁ sukappitaṁ,",
  "vv41:1.4_0": "Idhāgamā vehāyasaṁ antalikkhe.",
  "vv41:2.1_0": "Nāgassa dantesu duvesu nimmitā,",
  "vv41:2.2_0": "Acchodakā paduminiyo suphullā;",
  "vv41:2.3_0": "Padumesu ca tūriyagaṇā pabhijjare,",
  "vv41:2.4_0": "Imā ca naccanti manoharāyo.",
  "vv41:3.1_0": "Deviddhipattāsi mahānubhāve,",
  "vv41:3.2_0": "Manussabhūtā kimakāsi puññaṁ;",
  "vv41:3.3_0": "Kenāsi evaṁ jalitānubhāvā,",
  "vv41:3.4_0": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv41:4.1_0": "“Bārāṇasiyaṁ upasaṅkamitvā,",
  "vv41:4.2_0": "Buddhassahaṁ vatthayugaṁ adāsiṁ;",
  "vv41:4.3_0": "Pādāni vanditvā chamā nisīdiṁ,",
  "vv41:4.4_0": "Vittā cahaṁ añjalikaṁ akāsiṁ.",
  "vv41:5.1_0": "Buddho ca me kañcanasannibhattaco,",
  "vv41:5.2_0": "Adesayi samudayadukkhaniccataṁ;",
  "vv41:5.3_0": "Asaṅkhataṁ dukkhanirodhasassataṁ,",
  "vv41:5.4_0": "Maggaṁ adesayi yato vijānisaṁ.",
  "vv41:6.1_0": "Appāyukī kālakatā tato cutā,",
  "vv41:6.2_0": "Upapannā tidasagaṇaṁ yasassinī;",
  "vv41:6.3_0": "Sakkassahaṁ aññatarā pajāpati,",
  "vv41:6.4_0": "Yasuttarā nāma disāsu vissutā”ti.",
  "vv41:7.1_0": "Nāgavimānaṁ tatiyaṁ."
}