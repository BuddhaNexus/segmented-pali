{
  "iti30:0.1_0": "Itivuttaka 30",
  "iti30:0.2_0": "Dukanipāta",
  "iti30:0.3_0": "Paṭhamavagga",
  "iti30:0.4_0": "Tapanīyasutta",
  "iti30:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti30:2.1_0": "“Dveme, bhikkhave, dhammā tapanīyā.",
  "iti30:2.2_0": "Katame dve?",
  "iti30:2.3_0": "Idha,",
  "iti30:2.3_1": "bhikkhave,",
  "iti30:2.3_2": "ekacco akatakalyāṇo hoti,",
  "iti30:2.3_3": "akatakusalo,",
  "iti30:2.3_4": "akatabhīruttāṇo, katapāpo,",
  "iti30:2.3_5": "kataluddo,",
  "iti30:2.3_6": "katakibbiso.",
  "iti30:2.4_0": "So ‘akataṁ me kalyāṇan’tipi tappati, ‘kataṁ me pāpan’tipi tappati.",
  "iti30:2.5_0": "Ime kho, bhikkhave, dve dhammā tapanīyā”ti.",
  "iti30:2.6_0": "Etamatthaṁ bhagavā avoca.",
  "iti30:2.7_0": "Tatthetaṁ iti vuccati:",
  "iti30:3.1_0": "“Kāyaduccaritaṁ katvā,",
  "iti30:3.2_0": "vacīduccaritāni ca;",
  "iti30:3.3_0": "Manoduccaritaṁ katvā,",
  "iti30:3.4_0": "yañcaññaṁ dosasañhitaṁ.",
  "iti30:4.1_0": "Akatvā kusalaṁ kammaṁ,",
  "iti30:4.2_0": "katvānākusalaṁ bahuṁ;",
  "iti30:4.3_0": "Kāyassa bhedā duppañño,",
  "iti30:4.4_0": "nirayaṁ sopapajjatī”ti.",
  "iti30:5.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti30:5.2_0": "Tatiyaṁ."
}