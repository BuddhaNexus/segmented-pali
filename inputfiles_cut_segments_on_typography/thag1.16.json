{
  "thag1.16:0.1_0": "Theragāthā 1.16",
  "thag1.16:0.2_0": "Ekakanipāta",
  "thag1.16:0.3_0": "Dutiyavagga",
  "thag1.16:0.4_0": "Belaṭṭhasīsattheragāthā",
  "thag1.16:1.1_0": "“Yathāpi bhaddo ājañño,",
  "thag1.16:1.2_0": "naṅgalāvattanī sikhī;",
  "thag1.16:1.3_0": "Gacchati appakasirena,",
  "thag1.16:1.4_0": "evaṁ rattindivā mama;",
  "thag1.16:1.5_0": "Gacchanti appakasirena,",
  "thag1.16:1.6_0": "sukhe laddhe nirāmise”ti.",
  "thag1.16:1.7_0": "… Belaṭṭhasīso thero …."
}