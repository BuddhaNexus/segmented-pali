{
  "tha-ap416:0.1_0": "Therāpadāna",
  "tha-ap416:0.2_0": "Bhaddālivagga",
  "tha-ap416:0.3_0": "4. Madhumaṁsadāyakattheraapadāna",
  "tha-ap416:1.1_0": "“Nagare bandhumatiyā,",
  "tha-ap416:1.2_0": "sūkariko ahosahaṁ;",
  "tha-ap416:1.3_0": "Ukkoṭakaṁ randhayitvā,",
  "tha-ap416:1.4_0": "madhumaṁsamhi okiriṁ.",
  "tha-ap416:2.1_0": "Sannipātaṁ ahaṁ gantvā,",
  "tha-ap416:2.2_0": "ekaṁ pattaṁ gahesahaṁ;",
  "tha-ap416:2.3_0": "Pūrayitvāna taṁ pattaṁ,",
  "tha-ap416:2.4_0": "bhikkhusaṅghassadāsahaṁ.",
  "tha-ap416:3.1_0": "Yottha therataro bhikkhu,",
  "tha-ap416:3.2_0": "niyyādesi mamaṁ tadā;",
  "tha-ap416:3.3_0": "Iminā pattapūrena,",
  "tha-ap416:3.4_0": "labhassu vipulaṁ sukhaṁ.",
  "tha-ap416:4.1_0": "Duve sampattiyo bhutvā,",
  "tha-ap416:4.2_0": "sukkamūlena codito;",
  "tha-ap416:4.3_0": "Pacchime vattamānamhi,",
  "tha-ap416:4.4_0": "kilese jhāpayissati.",
  "tha-ap416:5.1_0": "Tattha cittaṁ pasādetvā,",
  "tha-ap416:5.2_0": "tāvatiṁsamagacchahaṁ;",
  "tha-ap416:5.3_0": "Tattha bhutvā pivitvā ca,",
  "tha-ap416:5.4_0": "labhāmi vipulaṁ sukhaṁ.",
  "tha-ap416:6.1_0": "Maṇḍape rukkhamūle vā,",
  "tha-ap416:6.2_0": "pubbakammaṁ anussariṁ;",
  "tha-ap416:6.3_0": "Annapānābhivasso me,",
  "tha-ap416:6.4_0": "abhivassati tāvade.",
  "tha-ap416:7.1_0": "Idaṁ pacchimakaṁ mayhaṁ,",
  "tha-ap416:7.2_0": "carimo vattate bhavo;",
  "tha-ap416:7.3_0": "Idhāpi annapānaṁ me,",
  "tha-ap416:7.4_0": "vassate sabbakālikaṁ.",
  "tha-ap416:8.1_0": "Teneva madhudānena,",
  "tha-ap416:8.2_0": "sandhāvitvā bhave ahaṁ;",
  "tha-ap416:8.3_0": "Sabbāsave pariññāya,",
  "tha-ap416:8.4_0": "viharāmi anāsavo.",
  "tha-ap416:9.1_0": "Ekanavutito kappe,",
  "tha-ap416:9.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap416:9.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap416:9.4_0": "madhudānassidaṁ phalaṁ.",
  "tha-ap416:10.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap416:10.2_0": "…pe…",
  "tha-ap416:10.3_0": "viharāmi anāsavo.",
  "tha-ap416:11.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap416:11.2_0": "…pe…",
  "tha-ap416:11.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap416:12.1_0": "Paṭisambhidā catasso,",
  "tha-ap416:12.2_0": "…pe…",
  "tha-ap416:12.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap416:13.1_0": "Itthaṁ sudaṁ āyasmā madhumaṁsadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap416:14.1_0": "Madhumaṁsadāyakattherassāpadānaṁ catutthaṁ."
}