{
  "thi-ap36:0.1_0": "Therīapadāna",
  "thi-ap36:0.2_0": "Khattiyāvagga",
  "thi-ap36:0.3_0": "6 Abhirūpanandātherīapadāna",
  "thi-ap36:1.1_0": "“Ekanavutito kappe,",
  "thi-ap36:1.2_0": "vipassī nāma nāyako;",
  "thi-ap36:1.3_0": "Uppajji cārudassano,",
  "thi-ap36:1.4_0": "sabbadhammesu cakkhumā.",
  "thi-ap36:2.1_0": "Tadāhaṁ bandhumatiyaṁ,",
  "thi-ap36:2.2_0": "iddhe phīte mahākule;",
  "thi-ap36:2.3_0": "Jātā surūpā dayitā,",
  "thi-ap36:2.4_0": "pūjanīyā janassa ca.",
  "thi-ap36:3.1_0": "Upagantvā mahāvīraṁ,",
  "thi-ap36:3.2_0": "vipassiṁ lokanāyakaṁ;",
  "thi-ap36:3.3_0": "Dhammaṁ suṇitvā saraṇaṁ,",
  "thi-ap36:3.4_0": "upesiṁ naranāyakaṁ.",
  "thi-ap36:4.1_0": "Sīlesu saṁvutā hutvā,",
  "thi-ap36:4.2_0": "nibbute ca naruttame;",
  "thi-ap36:4.3_0": "Dhātuthūpassa upari,",
  "thi-ap36:4.4_0": "soṇṇacchattamapūjayiṁ.",
  "thi-ap36:5.1_0": "Muttacāgā sīlavatī,",
  "thi-ap36:5.2_0": "yāvajīvaṁ tato cutā;",
  "thi-ap36:5.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap36:5.4_0": "tāvatiṁsūpagā ahaṁ.",
  "thi-ap36:6.1_0": "Tadā dasahi ṭhānehi,",
  "thi-ap36:6.2_0": "adhibhotvāna sesake;",
  "thi-ap36:6.3_0": "Rūpasaddehi gandhehi,",
  "thi-ap36:6.4_0": "rasehi phusanehi ca.",
  "thi-ap36:7.1_0": "Āyunāpi ca vaṇṇena,",
  "thi-ap36:7.2_0": "sukhena yasasāpi ca;",
  "thi-ap36:7.3_0": "Tathevādhipateyyena,",
  "thi-ap36:7.4_0": "adhigayha virocahaṁ.",
  "thi-ap36:8.1_0": "Pacchime ca bhave dāni,",
  "thi-ap36:8.2_0": "jātāhaṁ kapilavhaye;",
  "thi-ap36:8.3_0": "Dhītā khemakasakkassa,",
  "thi-ap36:8.4_0": "nandā nāmāti vissutā.",
  "thi-ap36:9.1_0": "Abhirūpasampadampi,",
  "thi-ap36:9.2_0": "ahu me kantisūcakaṁ;",
  "thi-ap36:9.3_0": "Yadāhaṁ yobbanappattā,",
  "thi-ap36:9.4_0": "rūpalāvaññabhūsitā.",
  "thi-ap36:10.1_0": "Tadā mamatthe sakyānaṁ,",
  "thi-ap36:10.2_0": "vivādo sumahā ahu;",
  "thi-ap36:10.3_0": "Pabbājesi tato tāto,",
  "thi-ap36:10.4_0": "‘mā sakyā vinassiṁsu’ti.",
  "thi-ap36:11.1_0": "Pabbajitvā tathāgataṁ,",
  "thi-ap36:11.2_0": "rūpadessiṁ naruttamaṁ;",
  "thi-ap36:11.3_0": "Sutvāna nopagacchāmi,",
  "thi-ap36:11.4_0": "mama rūpena gabbitā.",
  "thi-ap36:12.1_0": "Ovādampi na gacchāmi,",
  "thi-ap36:12.2_0": "buddhadassanabhīrutā;",
  "thi-ap36:12.3_0": "Tadā jino upāyena,",
  "thi-ap36:12.4_0": "upanetvā sasantikaṁ.",
  "thi-ap36:13.1_0": "Tissitthiyo nidassesi,",
  "thi-ap36:13.2_0": "iddhiyā maggakovido;",
  "thi-ap36:13.3_0": "Accharārūpasadisaṁ,",
  "thi-ap36:13.4_0": "taruṇiṁ jaritaṁ mataṁ.",
  "thi-ap36:14.1_0": "Tāyo disvā susaṁviggā,",
  "thi-ap36:14.2_0": "virattāse kaḷevare;",
  "thi-ap36:14.3_0": "Aṭṭhāsiṁ bhavanibbindā,",
  "thi-ap36:14.4_0": "tadā maṁ āha nāyako.",
  "thi-ap36:15.1_0": "‘Āturaṁ asuciṁ pūtiṁ,",
  "thi-ap36:15.2_0": "passa nande samussayaṁ;",
  "thi-ap36:15.3_0": "Uggharantaṁ paggharantaṁ,",
  "thi-ap36:15.4_0": "bālānaṁ abhinanditaṁ.",
  "thi-ap36:16.1_0": "Asubhāya cittaṁ bhāvehi,",
  "thi-ap36:16.2_0": "ekaggaṁ susamāhitaṁ;",
  "thi-ap36:16.3_0": "Yathā idaṁ tathā etaṁ,",
  "thi-ap36:16.4_0": "yathā etaṁ tathā idaṁ.",
  "thi-ap36:17.1_0": "Evametaṁ avekkhantī,",
  "thi-ap36:17.2_0": "rattindivamatanditā;",
  "thi-ap36:17.3_0": "Tato sakāya paññāya,",
  "thi-ap36:17.4_0": "abhinibbijjha vacchasi’.",
  "thi-ap36:18.1_0": "Tassā me appamattāya,",
  "thi-ap36:18.2_0": "vicarantiyā yoniso;",
  "thi-ap36:18.3_0": "Yathābhūtaṁ ayaṁ kāyo,",
  "thi-ap36:18.4_0": "diṭṭho santarabāhiro.",
  "thi-ap36:19.1_0": "Atha nibbindahaṁ kāye,",
  "thi-ap36:19.2_0": "ajjhattañca virajjahaṁ;",
  "thi-ap36:19.3_0": "Appamattā visaṁyuttā,",
  "thi-ap36:19.4_0": "upasantāmhi nibbutā.",
  "thi-ap36:20.1_0": "Iddhīsu ca vasī homi,",
  "thi-ap36:20.2_0": "dibbāya sotadhātuyā;",
  "thi-ap36:20.3_0": "Cetopariyañāṇassa,",
  "thi-ap36:20.4_0": "vasī homi mahāmune.",
  "thi-ap36:21.1_0": "Pubbenivāsaṁ jānāmi,",
  "thi-ap36:21.2_0": "dibbacakkhu visodhitaṁ;",
  "thi-ap36:21.3_0": "Sabbāsavā parikkhīṇā,",
  "thi-ap36:21.4_0": "natthi dāni punabbhavo.",
  "thi-ap36:22.1_0": "Atthadhammaniruttīsu,",
  "thi-ap36:22.2_0": "paṭibhāne tatheva ca;",
  "thi-ap36:22.3_0": "Ñāṇaṁ mama mahāvīra,",
  "thi-ap36:22.4_0": "uppannaṁ tava santike.",
  "thi-ap36:23.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap36:23.2_0": "…pe…",
  "thi-ap36:23.3_0": "viharāmi anāsavā.",
  "thi-ap36:24.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap36:24.2_0": "…pe…",
  "thi-ap36:24.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap36:25.1_0": "Paṭisambhidā catasso,",
  "thi-ap36:25.2_0": "…pe…",
  "thi-ap36:25.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap36:26.1_0": "Itthaṁ sudaṁ abhirūpanandā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap36:27.1_0": "Abhirūpanandātheriyāpadānaṁ chaṭṭhaṁ."
}