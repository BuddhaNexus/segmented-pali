{
  "mil3.1.10:0.1_0": "Milindapañha",
  "mil3.1.10:0.2_0": "Mahāvagga",
  "mil3.1.10:0.3_0": "10. Sampasādanalakkhaṇasaddhāpañha",
  "mil3.1.10:1.1_0": "Rājā āha—",
  "mil3.1.10:1.2_0": "“bhante nāgasena, kiṁlakkhaṇā saddhā”ti?",
  "mil3.1.10:1.3_0": "“Sampasādanalakkhaṇā ca, mahārāja, saddhā, sampakkhandanalakkhaṇā cā”ti.",
  "mil3.1.10:1.4_0": "“Kathaṁ, bhante, sampasādanalakkhaṇā saddhā”ti?",
  "mil3.1.10:1.5_0": "“Saddhā kho, mahārāja,",
  "mil3.1.10:1.5_1": "uppajjamānā nīvaraṇe vikkhambheti,",
  "mil3.1.10:1.5_2": "vinīvaraṇaṁ cittaṁ hoti acchaṁ vippasannaṁ anāvilaṁ.",
  "mil3.1.10:1.6_0": "Evaṁ kho, mahārāja, sampasādanalakkhaṇā saddhā”ti.",
  "mil3.1.10:2.1_0": "“Opammaṁ karohī”ti.",
  "mil3.1.10:2.2_0": "“Yathā, mahārāja,",
  "mil3.1.10:2.2_1": "rājā cakkavattī caturaṅginiyā senāya saddhiṁ addhānamaggappaṭipanno parittaṁ udakaṁ tareyya,",
  "mil3.1.10:2.2_2": "taṁ udakaṁ hatthīhi ca assehi ca rathehi ca pattīhi ca khubhitaṁ bhaveyya āvilaṁ luḷitaṁ kalalībhūtaṁ.",
  "mil3.1.10:2.3_0": "Uttiṇṇo ca rājā cakkavattī manusse āṇāpeyya ‘pānīyaṁ, bhaṇe, āharatha,",
  "mil3.1.10:2.3_1": "pivissāmī’ti,",
  "mil3.1.10:2.3_2": "rañño ca udakappasādako maṇi bhaveyya.",
  "mil3.1.10:2.4_0": "‘Evaṁ,",
  "mil3.1.10:2.4_1": "devā’ti kho te manussā rañño cakkavattissa paṭissutvā taṁ udakappasādakaṁ maṇiṁ udake pakkhipeyyuṁ,",
  "mil3.1.10:2.4_2": "tasmiṁ udake pakkhittamatte saṅkhasevālapaṇakaṁ vigaccheyya,",
  "mil3.1.10:2.4_3": "kaddamo ca sannisīdeyya,",
  "mil3.1.10:2.4_4": "acchaṁ bhaveyya udakaṁ vippasannaṁ anāvilaṁ.",
  "mil3.1.10:2.5_0": "Tato rañño cakkavattissa pānīyaṁ upanāmeyyuṁ ‘pivatu, deva, pānīyan’ti.",
  "mil3.1.10:3.1_0": "Yathā, mahārāja, udakaṁ,",
  "mil3.1.10:3.1_1": "evaṁ cittaṁ daṭṭhabbaṁ,",
  "mil3.1.10:3.1_2": "yathā te manussā,",
  "mil3.1.10:3.1_3": "evaṁ yogāvacaro daṭṭhabbo,",
  "mil3.1.10:3.1_4": "yathā saṅkhasevālapaṇakaṁ kaddamo ca,",
  "mil3.1.10:3.1_5": "evaṁ kilesā daṭṭhabbā.",
  "mil3.1.10:3.2_0": "Yathā udakappasādako maṇi,",
  "mil3.1.10:3.2_1": "evaṁ saddhā daṭṭhabbā,",
  "mil3.1.10:3.2_2": "yathā udakappasādake maṇimhi udake pakkhittamatte saṅkhasevālapaṇakaṁ vigaccheyya,",
  "mil3.1.10:3.2_3": "kaddamo ca sannisīdeyya,",
  "mil3.1.10:3.2_4": "acchaṁ bhaveyya udakaṁ vippasannaṁ anāvilaṁ;",
  "mil3.1.10:3.3_0": "evameva kho, mahārāja,",
  "mil3.1.10:3.3_1": "saddhā uppajjamānā nīvaraṇe vikkhambheti,",
  "mil3.1.10:3.3_2": "vinīvaraṇaṁ cittaṁ hoti acchaṁ vippasannaṁ anāvilaṁ.",
  "mil3.1.10:3.4_0": "Evaṁ kho, mahārāja, sampasādanalakkhaṇā saddhā”ti.",
  "mil3.1.10:4.1_0": "“Kallosi, bhante nāgasenā”ti.",
  "mil3.1.10:5.1_0": "Sampasādanalakkhaṇasaddhāpañho dasamo."
}