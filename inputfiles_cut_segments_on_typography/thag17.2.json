{
  "thag17.2:0.1_0": "Theragāthā 17.2",
  "thag17.2:0.2_0": "Tiṁsanipāta",
  "thag17.2:0.3_0": "Paṭhamavagga",
  "thag17.2:0.4_0": "Sāriputtattheragāthā",
  "thag17.2:1.1_0": "“Yathācārī yathāsato satīmā,",
  "thag17.2:1.2_0": "Yatasaṅkappajjhāyi appamatto;",
  "thag17.2:1.3_0": "Ajjhattarato samāhitatto,",
  "thag17.2:1.4_0": "Eko santusito tamāhu bhikkhuṁ.",
  "thag17.2:2.1_0": "Allaṁ sukkhaṁ vā bhuñjanto,",
  "thag17.2:2.2_0": "Na bāḷhaṁ suhito siyā;",
  "thag17.2:2.3_0": "Ūnūdaro mitāhāro,",
  "thag17.2:2.4_0": "Sato bhikkhu paribbaje.",
  "thag17.2:3.1_0": "Cattāro pañca ālope,",
  "thag17.2:3.2_0": "abhutvā udakaṁ pive;",
  "thag17.2:3.3_0": "Alaṁ phāsuvihārāya,",
  "thag17.2:3.4_0": "pahitattassa bhikkhuno.",
  "thag17.2:4.1_0": "Kappiyaṁ tañce chādeti,",
  "thag17.2:4.2_0": "cīvaraṁ idamatthikaṁ;",
  "thag17.2:4.3_0": "Alaṁ phāsuvihārāya,",
  "thag17.2:4.4_0": "pahitattassa bhikkhuno.",
  "thag17.2:5.1_0": "Pallaṅkena nisinnassa,",
  "thag17.2:5.2_0": "jaṇṇuke nābhivassati;",
  "thag17.2:5.3_0": "Alaṁ phāsuvihārāya,",
  "thag17.2:5.4_0": "pahitattassa bhikkhuno.",
  "thag17.2:6.1_0": "Yo sukhaṁ dukkhato adda,",
  "thag17.2:6.2_0": "dukkhamaddakkhi sallato;",
  "thag17.2:6.3_0": "Ubhayantarena nāhosi,",
  "thag17.2:6.4_0": "kena lokasmi kiṁ siyā.",
  "thag17.2:7.1_0": "Mā me kadāci pāpiccho,",
  "thag17.2:7.2_0": "kusīto hīnavīriyo;",
  "thag17.2:7.3_0": "Appassuto anādaro,",
  "thag17.2:7.4_0": "kena lokasmi kiṁ siyā.",
  "thag17.2:8.1_0": "Bahussuto ca medhāvī,",
  "thag17.2:8.2_0": "sīlesu susamāhito;",
  "thag17.2:8.3_0": "Cetosamathamanuyutto,",
  "thag17.2:8.4_0": "api muddhani tiṭṭhatu.",
  "thag17.2:9.1_0": "Yo papañcamanuyutto,",
  "thag17.2:9.2_0": "papañcābhirato mago;",
  "thag17.2:9.3_0": "Virādhayī so nibbānaṁ,",
  "thag17.2:9.4_0": "yogakkhemaṁ anuttaraṁ.",
  "thag17.2:10.1_0": "Yo ca papañcaṁ hitvāna,",
  "thag17.2:10.2_0": "nippapañcapathe rato;",
  "thag17.2:10.3_0": "Ārādhayī so nibbānaṁ,",
  "thag17.2:10.4_0": "yogakkhemaṁ anuttaraṁ.",
  "thag17.2:11.1_0": "Gāme vā yadi vāraññe,",
  "thag17.2:11.2_0": "Ninne vā yadi vā thale;",
  "thag17.2:11.3_0": "Yattha arahanto viharanti,",
  "thag17.2:11.4_0": "Taṁ bhūmirāmaṇeyyakaṁ.",
  "thag17.2:12.1_0": "Ramaṇīyāni araññāni,",
  "thag17.2:12.2_0": "yattha na ramatī jano;",
  "thag17.2:12.3_0": "Vītarāgā ramissanti,",
  "thag17.2:12.4_0": "na te kāmagavesino.",
  "thag17.2:13.1_0": "Nidhīnaṁva pavattāraṁ,",
  "thag17.2:13.2_0": "yaṁ passe vajjadassinaṁ;",
  "thag17.2:13.3_0": "Niggayhavādiṁ medhāviṁ,",
  "thag17.2:13.4_0": "tādisaṁ paṇḍitaṁ bhaje;",
  "thag17.2:13.5_0": "Tādisaṁ bhajamānassa,",
  "thag17.2:13.6_0": "seyyo hoti na pāpiyo.",
  "thag17.2:14.1_0": "Ovadeyyānusāseyya,",
  "thag17.2:14.2_0": "asabbhā ca nivāraye;",
  "thag17.2:14.3_0": "Satañhi so piyo hoti,",
  "thag17.2:14.4_0": "asataṁ hoti appiyo.",
  "thag17.2:15.1_0": "Aññassa bhagavā buddho,",
  "thag17.2:15.2_0": "dhammaṁ desesi cakkhumā;",
  "thag17.2:15.3_0": "Dhamme desiyamānamhi,",
  "thag17.2:15.4_0": "sotamodhesimatthiko.",
  "thag17.2:16.1_0": "Taṁ me amoghaṁ savanaṁ,",
  "thag17.2:16.2_0": "vimuttomhi anāsavo.",
  "thag17.2:17.1_0": "Neva pubbenivāsāya,",
  "thag17.2:17.2_0": "napi dibbassa cakkhuno;",
  "thag17.2:17.3_0": "Cetopariyāya iddhiyā,",
  "thag17.2:17.4_0": "cutiyā upapattiyā;",
  "thag17.2:17.5_0": "Sotadhātuvisuddhiyā,",
  "thag17.2:17.6_0": "paṇidhī me na vijjati”.",
  "thag17.2:18.1_0": "“Rukkhamūlaṁva nissāya,",
  "thag17.2:18.2_0": "muṇḍo saṅghāṭipāruto;",
  "thag17.2:18.3_0": "Paññāya uttamo thero,",
  "thag17.2:18.4_0": "upatissova jhāyati.",
  "thag17.2:19.1_0": "Avitakkaṁ samāpanno,",
  "thag17.2:19.2_0": "sammāsambuddhasāvako;",
  "thag17.2:19.3_0": "Ariyena tuṇhībhāvena,",
  "thag17.2:19.4_0": "upeto hoti tāvade.",
  "thag17.2:20.1_0": "Yathāpi pabbato selo,",
  "thag17.2:20.2_0": "acalo suppatiṭṭhito;",
  "thag17.2:20.3_0": "Evaṁ mohakkhayā bhikkhu,",
  "thag17.2:20.4_0": "pabbatova na vedhati”.",
  "thag17.2:21.1_0": "“Anaṅgaṇassa posassa,",
  "thag17.2:21.2_0": "niccaṁ sucigavesino;",
  "thag17.2:21.3_0": "Vālaggamattaṁ pāpassa,",
  "thag17.2:21.4_0": "abbhamattaṁva khāyati.",
  "thag17.2:22.1_0": "Nābhinandāmi maraṇaṁ,",
  "thag17.2:22.2_0": "nābhinandāmi jīvitaṁ;",
  "thag17.2:22.3_0": "Nikkhipissaṁ imaṁ kāyaṁ,",
  "thag17.2:22.4_0": "sampajāno patissato.",
  "thag17.2:23.1_0": "Nābhinandāmi maraṇaṁ,",
  "thag17.2:23.2_0": "nābhinandāmi jīvitaṁ;",
  "thag17.2:23.3_0": "Kālañca paṭikaṅkhāmi,",
  "thag17.2:23.4_0": "nibbisaṁ bhatako yathā”.",
  "thag17.2:24.1_0": "“Ubhayena midaṁ maraṇameva,",
  "thag17.2:24.2_0": "Nāmaraṇaṁ pacchā vā pure vā;",
  "thag17.2:24.3_0": "Paṭipajjatha mā vinassatha,",
  "thag17.2:24.4_0": "Khaṇo vo mā upaccagā.",
  "thag17.2:25.1_0": "Nagaraṁ yathā paccantaṁ,",
  "thag17.2:25.2_0": "guttaṁ santarabāhiraṁ;",
  "thag17.2:25.3_0": "Evaṁ gopetha attānaṁ,",
  "thag17.2:25.4_0": "khaṇo vo mā upaccagā;",
  "thag17.2:25.5_0": "Khaṇātītā hi socanti,",
  "thag17.2:25.6_0": "nirayamhi samappitā”.",
  "thag17.2:26.1_0": "“Upasanto uparato,",
  "thag17.2:26.2_0": "mantabhāṇī anuddhato;",
  "thag17.2:26.3_0": "Dhunāti pāpake dhamme,",
  "thag17.2:26.4_0": "dumapattaṁva māluto.",
  "thag17.2:27.1_0": "Upasanto uparato,",
  "thag17.2:27.2_0": "mantabhāṇī anuddhato;",
  "thag17.2:27.3_0": "Appāsi pāpake dhamme,",
  "thag17.2:27.4_0": "dumapattaṁva māluto.",
  "thag17.2:28.1_0": "Upasanto anāyāso,",
  "thag17.2:28.2_0": "vippasanno anāvilo;",
  "thag17.2:28.3_0": "Kalyāṇasīlo medhāvī,",
  "thag17.2:28.4_0": "dukkhassantakaro siyā”.",
  "thag17.2:29.1_0": "“Na vissase ekatiyesu evaṁ,",
  "thag17.2:29.2_0": "Agārisu pabbajitesu cāpi;",
  "thag17.2:29.3_0": "Sādhūpi hutvā na asādhu honti,",
  "thag17.2:29.4_0": "Asādhu hutvā puna sādhu honti.",
  "thag17.2:30.1_0": "Kāmacchando ca byāpādo,",
  "thag17.2:30.2_0": "thinamiddhañca bhikkhuno;",
  "thag17.2:30.3_0": "Uddhaccaṁ vicikicchā ca,",
  "thag17.2:30.4_0": "pañcete cittakelisā.",
  "thag17.2:31.1_0": "Yassa sakkariyamānassa,",
  "thag17.2:31.2_0": "asakkārena cūbhayaṁ;",
  "thag17.2:31.3_0": "Samādhi na vikampati,",
  "thag17.2:31.4_0": "appamādavihārino.",
  "thag17.2:32.1_0": "Taṁ jhāyinaṁ sātatikaṁ,",
  "thag17.2:32.2_0": "sukhumadiṭṭhivipassakaṁ;",
  "thag17.2:32.3_0": "Upādānakkhayārāmaṁ,",
  "thag17.2:32.4_0": "āhu sappuriso iti.",
  "thag17.2:33.1_0": "Mahāsamuddo pathavī,",
  "thag17.2:33.2_0": "pabbato anilopi ca;",
  "thag17.2:33.3_0": "Upamāya na yujjanti,",
  "thag17.2:33.4_0": "satthu varavimuttiyā.",
  "thag17.2:34.1_0": "Cakkānuvattako thero,",
  "thag17.2:34.2_0": "mahāñāṇī samāhito;",
  "thag17.2:34.3_0": "Pathavāpaggisamāno,",
  "thag17.2:34.4_0": "na rajjati na dussati.",
  "thag17.2:35.1_0": "Paññāpāramitaṁ patto,",
  "thag17.2:35.2_0": "mahābuddhi mahāmati;",
  "thag17.2:35.3_0": "Ajaḷo jaḷasamāno,",
  "thag17.2:35.4_0": "sadā carati nibbuto.",
  "thag17.2:36.1_0": "Pariciṇṇo mayā satthā,",
  "thag17.2:36.2_0": "… pe",
  "thag17.2:36.3_0": "…",
  "thag17.2:36.4_0": "bhavanetti samūhatā.",
  "thag17.2:37.1_0": "Sampādethappamādena,",
  "thag17.2:37.2_0": "esā me anusāsanī;",
  "thag17.2:37.3_0": "Handāhaṁ parinibbissaṁ,",
  "thag17.2:37.4_0": "vippamuttomhi sabbadhī”ti.",
  "thag17.2:37.5_0": "… Sāriputto thero …"
}