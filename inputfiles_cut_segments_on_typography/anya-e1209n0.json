{
  "anya-e1209n0:0_0": "Telakaṭāhagāthā",
  "anya-e1209n0:1_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1209n0:2_0": "1.",
  "anya-e1209n0:3_0": "Laṃkissaro jayatu vāraṇarājagāmī",
  "anya-e1209n0:4_0": "Bhogindabhoga rucirāyata pīṇa bāhu,",
  "anya-e1209n0:5_0": "Sādhupacāranirato guṇasannivāso",
  "anya-e1209n0:6_0": "Dhamme ṭhito vīgatakodhamadāvalepo;",
  "anya-e1209n0:7_0": "2.",
  "anya-e1209n0:8_0": "Yo sabbalokamahito karuṇādhivāso",
  "anya-e1209n0:9_0": "Mokkhākaro ravikulambara puṇṇa cando,",
  "anya-e1209n0:10_0": "Ñeyyodadhiṃ suvipulaṃ sakalaṃ vibuddho",
  "anya-e1209n0:11_0": "Lokuttamaṃ namatha taṃ sirasā munindaṃ;",
  "anya-e1209n0:12_0": "3.",
  "anya-e1209n0:13_0": "Sopānamālamamalaṃ tidasālayassa",
  "anya-e1209n0:14_0": "Saṃsāra sāgarasamuttaraṇāya setuṃ,",
  "anya-e1209n0:15_0": "Sabbāgatībhaya vivajjita khema maggaṃ",
  "anya-e1209n0:16_0": "Dhammaṃ namassatha sadā muninā paṇītaṃ;",
  "anya-e1209n0:17_0": "4.",
  "anya-e1209n0:18_0": "Deyyaṃ tadappamapi yattha pasanna cittā",
  "anya-e1209n0:19_0": "Datvā narā phalamuḷārataraṃ labhante,",
  "anya-e1209n0:20_0": "Taṃ sabbadā dasabalenapi suppasatthaṃ",
  "anya-e1209n0:21_0": "Saṅghaṃ namassatha sadāmitapuññakhettaṃ;",
  "anya-e1209n0:22_0": "5.",
  "anya-e1209n0:23_0": "Tejo balena mahatā ratanattayassa",
  "anya-e1209n0:24_0": "Lokattayaṃ samadhigacchati yena mokkhaṃ,",
  "anya-e1209n0:25_0": "Rakkhā na catthi ca samā ratanattayassa",
  "anya-e1209n0:26_0": "Tasmā sadā bhajatha taṃ ratanattayaṃ bho;",
  "anya-e1209n0:27_0": "6.",
  "anya-e1209n0:28_0": "Laṃkissaro parahitekarato nirāso",
  "anya-e1209n0:29_0": "Rattimpi jāgararato karuṇādhivāso,",
  "anya-e1209n0:30_0": "Lokaṃ vibodhayati lokahitāya kāmaṃ",
  "anya-e1209n0:31_0": "Dhammaṃ samācaratha jāgariyānuyuttā;",
  "anya-e1209n0:32_0": "7.",
  "anya-e1209n0:33_0": "Sattopakāra niratā kusale sahāyā",
  "anya-e1209n0:34_0": "Bho dullabhā bhuvi narā vihatappamādā,",
  "anya-e1209n0:35_0": "Laṃkādhipaṃ guṇadhanaṃ kusale sahāyaṃ",
  "anya-e1209n0:36_0": "Āgamma saṃcaratha dhammamalaṃ pamādaṃ;",
  "anya-e1209n0:37_0": "8.",
  "anya-e1209n0:38_0": "Dhammo tiloka saraṇo paramo rasānaṃ",
  "anya-e1209n0:39_0": "Dhammo mahaggharatano ratanesu loke,",
  "anya-e1209n0:40_0": "Dhammo bhave tibhavadukkha vināsahetu",
  "anya-e1209n0:41_0": "Dhammaṃ samācaratha jāgariyānuyuttā;",
  "anya-e1209n0:42_0": "9.",
  "anya-e1209n0:43_0": "Niddaṃ vinodayatha bhāvayathappameyyaṃ",
  "anya-e1209n0:44_0": "Dukkhaṃ aniccampi ceha anattatañca,",
  "anya-e1209n0:45_0": "Dehe ratiṃ jahatha ja jajjarabhājanābho",
  "anya-e1209n0:46_0": "Dhammaṃ samācaratha jāgariyānuyuttā;",
  "anya-e1209n0:47_0": "10.",
  "anya-e1209n0:48_0": "Okāsa majja mama natthi suve karissaṃ",
  "anya-e1209n0:49_0": "Dhammaṃ itīhalasatā kusalappayoge,",
  "anya-e1209n0:50_0": "Nā’laṃ tiyaddhasu tathā bhuvanattaye ca",
  "anya-e1209n0:51_0": "Kāmaṃ na catthi manujo maraṇā pamutto;",
  "anya-e1209n0:52_0": "11.",
  "anya-e1209n0:53_0": "Khitto yathā nabhasi kenacideva leḍḍu",
  "anya-e1209n0:54_0": "Bhūmiṃ samāpatti bhāratayā khaṇena,",
  "anya-e1209n0:55_0": "Jātattameva khalu kāraṇamekamatra",
  "anya-e1209n0:56_0": "Lokaṃ sadā nanu dhuvaṃ maraṇāya gantuṃ;",
  "anya-e1209n0:57_0": "12.",
  "anya-e1209n0:58_0": "Kāmaṃ narassa patato girimuddhanāto",
  "anya-e1209n0:59_0": "Majjhe na kiñci bhayanissaraṇāya hetu,",
  "anya-e1209n0:60_0": "Kāmaṃ vajanti maraṇaṃ tibhavesu sattā",
  "anya-e1209n0:61_0": "Bhoge ratiṃ pajahathāpi ca jīvite ca;",
  "anya-e1209n0:62_0": "13.",
  "anya-e1209n0:63_0": "Kāmaṃ patanti mahiyā khalu vassadhārā",
  "anya-e1209n0:64_0": "Vijjullatā vitatamegha mukhā pamuttā,",
  "anya-e1209n0:65_0": "Evaṃ narā maraṇabhīma papātamajjhe",
  "anya-e1209n0:66_0": "Kāmaṃ patanti nahi koci bhavesu nicco;",
  "anya-e1209n0:67_0": "14.",
  "anya-e1209n0:68_0": "Velātaṭe paṭutaroru taraṃgamālā",
  "anya-e1209n0:69_0": "Nāsaṃ vajanti satataṃ salilālayassa,",
  "anya-e1209n0:70_0": "Nāsaṃ tathā samupayanti narāmarānaṃ",
  "anya-e1209n0:71_0": "Pāṇāni dāruṇatare maraṇodadhimhi;",
  "anya-e1209n0:72_0": "15.",
  "anya-e1209n0:73_0": "Ruddhopi so rathavarassagajādhipehi",
  "anya-e1209n0:74_0": "Yodhehi cāpi sabalehi ca sāyudhehi,",
  "anya-e1209n0:75_0": "Lokaṃ vivaṃciya sadā maraṇūsabho so",
  "anya-e1209n0:76_0": "Kāmaṃ nihanti bhuvanattaya sāli daṇḍaṃ;",
  "anya-e1209n0:77_0": "16.",
  "anya-e1209n0:78_0": "Bho mārutena mahatā vihato padīpo",
  "anya-e1209n0:79_0": "Khippaṃ vināsa mukhameti mahappabhopi,",
  "anya-e1209n0:80_0": "Loke tathā maraṇacaṇḍa samīraṇena",
  "anya-e1209n0:81_0": "Khippaṃ vinassati narāyumahā padīpo;",
  "anya-e1209n0:82_0": "17",
  "anya-e1209n0:83_0": "Rāmajjunappabhūti bhūpati puṃgavā ca",
  "anya-e1209n0:84_0": "Sūrā pure raṇamukhe vijitāri saṅghā,",
  "anya-e1209n0:85_0": "Tepīha caṇḍa maraṇogha nimuggadehā",
  "anya-e1209n0:86_0": "Nāsaṃ gatā jagati ke maraṇā pamuttā?",
  "anya-e1209n0:87_0": "18.",
  "anya-e1209n0:88_0": "Lakkhī ca sāgarapaṭā sadharādharā ca",
  "anya-e1209n0:89_0": "Sampattiyo ca vividhā api rūpasobhā,",
  "anya-e1209n0:90_0": "Sabbā ca tā api ca mittasutā ca dārā",
  "anya-e1209n0:91_0": "Ke cāpi kaṃ anugatā maraṇaṃ vajantaṃ?",
  "anya-e1209n0:92_0": "19.",
  "anya-e1209n0:93_0": "Brahmāsurāsuragaṇā ca mahānubhāvā",
  "anya-e1209n0:94_0": "Gandhabbakinnaramahoragarakkhasā ca,",
  "anya-e1209n0:95_0": "Te cā pare ca maraṇaggisikhāya sabbe",
  "anya-e1209n0:96_0": "Ante patanti salabhā iva khīṇapuññā;",
  "anya-e1209n0:97_0": "20.",
  "anya-e1209n0:98_0": "Ye sāriputtapamukhā munisāvakā ca",
  "anya-e1209n0:99_0": "Suddhā sadāsavanudā paramiddhipattā,",
  "anya-e1209n0:100_0": "Te cāpi maccuvaḷabhā mukha sannimuggā",
  "anya-e1209n0:101_0": "Dīpānivānalahatā khayataṃ upetā;",
  "anya-e1209n0:102_0": "21.",
  "anya-e1209n0:103_0": "Buddhāpi buddhakamalāmalacārunettā",
  "anya-e1209n0:104_0": "Battiṃsalakkhaṇa virājita rūpasobhā,",
  "anya-e1209n0:105_0": "Sabbāsacakkhayakarāpi ca lokanāthā",
  "anya-e1209n0:106_0": "Sammadditā maraṇamattamahāgajena;",
  "anya-e1209n0:107_0": "22.",
  "anya-e1209n0:108_0": "Rogāturesu karuṇā na jarāturesu",
  "anya-e1209n0:109_0": "Khiḍḍāparesu sukumārakumārakesu,",
  "anya-e1209n0:110_0": "Lokaṃ sadā hanati maccu mahāgajindo",
  "anya-e1209n0:111_0": "Davānalo vanamivāvarataṃ asesaṃ;",
  "anya-e1209n0:112_0": "23.",
  "anya-e1209n0:113_0": "Āpuṇṇatā na salile na jalāsayassa",
  "anya-e1209n0:114_0": "Kaṭṭhassa cāpi bahutā na hutāsanassa,",
  "anya-e1209n0:115_0": "Bhutvāna so tibhūvanampi tathā asesaṃ",
  "anya-e1209n0:116_0": "Bho niddayo na khalu pītimupeti maccu;",
  "anya-e1209n0:117_0": "24.",
  "anya-e1209n0:118_0": "Bho moha mohitatayā vivaso adhañño",
  "anya-e1209n0:119_0": "Loko patatyapipi maccumukhe subhīme,",
  "anya-e1209n0:120_0": "Bhoge ratiṃ samupayāti nihīnapañño",
  "anya-e1209n0:121_0": "Dolā taraṅgacapale supinopameyye;",
  "anya-e1209n0:122_0": "25.",
  "anya-e1209n0:123_0": "Ekopi maccurabhihantumalaṃ tilokaṃ",
  "anya-e1209n0:124_0": "Kiṃ niddayā api jarāmaraṇānuyāyī,",
  "anya-e1209n0:125_0": "Ko vā kareyya vibhasuvesu ca jīvitāsaṃ",
  "anya-e1209n0:126_0": "Jāto naro supina saṃgama sannibhesu;",
  "anya-e1209n0:127_0": "26.",
  "anya-e1209n0:128_0": "Niccāturaṃ jagadidaṃ sabhayaṃ sasokaṃ",
  "anya-e1209n0:129_0": "Disvā ca kodhamadamohajarābhibhūtaṃ,",
  "anya-e1209n0:130_0": "Ubbegamattamapi yassa na vijjatī ce",
  "anya-e1209n0:131_0": "So dāruṇona maraṇaṃ vata taṃ dhiratthu!",
  "anya-e1209n0:132_0": "Bho bho na passatha jarāsidharañhi maccu",
  "anya-e1209n0:133_0": "Māhaññamānamakhilaṃ satataṃ tilokaṃ,",
  "anya-e1209n0:134_0": "Kiṃ niddayā nayatha vītabhayā tiyāmaṃ",
  "anya-e1209n0:135_0": "Dhammaṃ sadā’savanudaṃ caratha’ppamattā;",
  "anya-e1209n0:136_0": "28.",
  "anya-e1209n0:137_0": "Bhāvetha bho maraṇamāravivajjanāya",
  "anya-e1209n0:138_0": "Loke sadā maraṇa saññamimaṃ yatattā,",
  "anya-e1209n0:139_0": "Evañhi bhāvanaratassa narassa tassa",
  "anya-e1209n0:140_0": "Taṇhā pahīyati sarīragatā asesā;",
  "anya-e1209n0:141_0": "29.",
  "anya-e1209n0:142_0": "Rūpaṃ jarā piyataraṃ malinīkaroti",
  "anya-e1209n0:143_0": "Sabbaṃ balaṃ harati attani ghorarogo,",
  "anya-e1209n0:144_0": "Nānūpabhoga parirakkhita mattabhāvaṃ",
  "anya-e1209n0:145_0": "Bho maccu saṃharati kiṃ phalamattabhāve?",
  "anya-e1209n0:146_0": "30.",
  "anya-e1209n0:147_0": "Kammānilāpahatarogataraṃgabhaṃge",
  "anya-e1209n0:148_0": "Saṃsāra sāgara mukhe vitate vipannā,",
  "anya-e1209n0:149_0": "Mā māpamādamakarittha karotha mokkhaṃ",
  "anya-e1209n0:150_0": "Dukkhodayo nanu pamādamayaṃ narānaṃ;",
  "anya-e1209n0:151_0": "31.",
  "anya-e1209n0:152_0": "Bhogā ca mittasutaporisa bandhavā ca",
  "anya-e1209n0:153_0": "Nārī ca jīvitasamā api khettavatthu,",
  "anya-e1209n0:154_0": "Sabbāni tāni paralokamito vajantaṃ",
  "anya-e1209n0:155_0": "Nānubbajanti kusalākusalaṃva loke;",
  "anya-e1209n0:156_0": "32.",
  "anya-e1209n0:157_0": "Bho vijjucaṃcalatare bhavasāgaramhi",
  "anya-e1209n0:158_0": "Khittā purā katamahāpavanena tena,",
  "anya-e1209n0:159_0": "Kāmaṃ vibhijjati khaṇena sarīranāvā",
  "anya-e1209n0:160_0": "Hatthe karotha paramaṃ guṇahatthasāraṃ;",
  "anya-e1209n0:161_0": "33.",
  "anya-e1209n0:162_0": "Niccaṃ vibhijjatiha āmaka bhājanaṃva",
  "anya-e1209n0:163_0": "Saṃrakkhitopi bahudhā iha attabhāvo,",
  "anya-e1209n0:164_0": "Dhammaṃ samācaratha saggapatippatiṭṭhaṃ",
  "anya-e1209n0:165_0": "Dhammo suciṇṇamihameva phalaṃ dadāti;",
  "anya-e1209n0:166_0": "34.",
  "anya-e1209n0:167_0": "Rantvā sadā piyatare divi devarajje",
  "anya-e1209n0:168_0": "Namhā cavanti vibudhā api khīṇapuññā,",
  "anya-e1209n0:169_0": "Sabbaṃ sukhaṃ divi bhuvīha viyoganiṭṭhaṃ",
  "anya-e1209n0:170_0": "Ko paññavā bhavasukhesu ratiṃ kareyya?",
  "anya-e1209n0:171_0": "35.",
  "anya-e1209n0:172_0": "Buddho sasāvakagaṇo jagadekanātho",
  "anya-e1209n0:173_0": "Tārāvalīparivutopi ca puṇṇacando,",
  "anya-e1209n0:174_0": "Indopi devamakuṭaṃkita pādakañjo",
  "anya-e1209n0:175_0": "Ko pheṇapiṇḍa-na-samo tibhavesu jāto?",
  "anya-e1209n0:176_0": "36.",
  "anya-e1209n0:177_0": "Līlāvataṃsamapi yobbana rūpasobhaṃ",
  "anya-e1209n0:178_0": "Attūpamaṃ piyajanena ca sampayogaṃ,",
  "anya-e1209n0:179_0": "Disvāpi vijjucapalaṃ kurute pamādaṃ",
  "anya-e1209n0:180_0": "Bho mohamohitajano bhavarāgaratto;",
  "anya-e1209n0:181_0": "37.",
  "anya-e1209n0:182_0": "Putto pitā bhavati mātu patīha putto",
  "anya-e1209n0:183_0": "Nārī kadāci jananī ca pitā ca putto,",
  "anya-e1209n0:184_0": "Evaṃ sadā viparivattati jīvaloko",
  "anya-e1209n0:185_0": "Citte sadāticapale khalu jātiraṅge;",
  "anya-e1209n0:186_0": "38.",
  "anya-e1209n0:187_0": "Rantvā pure vividhaphullalatākulehi",
  "anya-e1209n0:188_0": "Devāpi nandanavane surasundarīhi,",
  "anya-e1209n0:189_0": "Te ve’kadā vitatakaṇṭakasaṃkaṭesu",
  "anya-e1209n0:190_0": "Bho koṭisimbalivanesu phusanti dukkhaṃ;",
  "anya-e1209n0:191_0": "39.",
  "anya-e1209n0:192_0": "Bhutvā sudhannamapi kañcanabhājanesu",
  "anya-e1209n0:193_0": "Sagge pure suravarā paramiddhipattā,",
  "anya-e1209n0:194_0": "Te cāpi pajjalitalohagulaṃ gilanti",
  "anya-e1209n0:195_0": "Kāmaṃ kadāci narakālaya vāsabhūtā;",
  "anya-e1209n0:196_0": "40.",
  "anya-e1209n0:197_0": "Bhutvā narissaravarā ca mahiṃ asesaṃ",
  "anya-e1209n0:198_0": "Devādhipā ca divi dibbasukhaṃ surammaṃ,",
  "anya-e1209n0:199_0": "Vāsaṃ kadāci khurasañcitabhūtalesu",
  "anya-e1209n0:200_0": "Te vā mahārathagaṇānugatā divīha;",
  "anya-e1209n0:201_0": "41.",
  "anya-e1209n0:202_0": "Devaṅganā lalitabhinnataraṅgamāle",
  "anya-e1209n0:203_0": "Raṅge mahissarajaṭāmakuṭānuyāte,",
  "anya-e1209n0:204_0": "Rantvā pure suravarā pamadāsahāyā",
  "anya-e1209n0:205_0": "Te cāpi ghorataravetaraṇiṃ patanti;",
  "anya-e1209n0:206_0": "42.",
  "anya-e1209n0:207_0": "Phullāni pallavalatāphalasaṃkulāni",
  "anya-e1209n0:208_0": "Rammāni nandanavanāni manoramāni,",
  "anya-e1209n0:209_0": "Dibbaccharālalitapuṇṇadarīmukhāni",
  "anya-e1209n0:210_0": "Kelāsamerusikharāni ca yanti nāsaṃ;",
  "anya-e1209n0:211_0": "43.",
  "anya-e1209n0:212_0": "Dolā’nilā’nalataraṃgasamā hi bhogā",
  "anya-e1209n0:213_0": "Vijjuppabhāticapalāni ca jīvitāni,",
  "anya-e1209n0:214_0": "Māyāmarīcijalasomasamaṃ sarīraṃ",
  "anya-e1209n0:215_0": "Ko jīvite ca vibhave ca kareyya rāgaṃ?",
  "anya-e1209n0:216_0": "44.",
  "anya-e1209n0:217_0": "Kiṃ dukkhamatthi na bhavesu ca dāruṇesu",
  "anya-e1209n0:218_0": "Sattopi tassa vividhassa na bhājano ko,",
  "anya-e1209n0:219_0": "Jāto yathā maraṇarogajarābhibhūto",
  "anya-e1209n0:220_0": "Ko sajjano bhavaratiṃ pihayeyya’bālo?",
  "anya-e1209n0:221_0": "45.",
  "anya-e1209n0:222_0": "Ke vāpi pajjalitalohagulaṃ gilanti",
  "anya-e1209n0:223_0": "Sakkā kathañcidapi pāṇitalena bhīmaṃ,",
  "anya-e1209n0:224_0": "Dukkhodayaṃ asucinissavanaṃ anantaṃ",
  "anya-e1209n0:225_0": "Ko kāmayetha khalu dehamimaṃ abālo?",
  "anya-e1209n0:226_0": "46.",
  "anya-e1209n0:227_0": "Loke na maccusamamatthi bhayaṃ narānaṃ",
  "anya-e1209n0:228_0": "Na vyādhidukkhasamamatthi ca kiṃci dukkhaṃ,",
  "anya-e1209n0:229_0": "Evaṃ virūpakaraṇaṃ na jarāsamānaṃ",
  "anya-e1209n0:230_0": "Mohena bho ratimupeti tathāpi dehe;",
  "anya-e1209n0:231_0": "47.",
  "anya-e1209n0:232_0": "Nissārato nalakalīkadalīsamānaṃ",
  "anya-e1209n0:233_0": "Attānameva parihaññati attahetu,",
  "anya-e1209n0:234_0": "Sampositopi kusahāya ivākataññū",
  "anya-e1209n0:235_0": "Kāyo na yassa anugacchati kālakerā;",
  "anya-e1209n0:236_0": "48.",
  "anya-e1209n0:237_0": "Taṃ pheṇapiṇḍasadisaṃ visasūlakappaṃ",
  "anya-e1209n0:238_0": "Toyā’nilā’nalamahīuragādhivāsaṃ,",
  "anya-e1209n0:239_0": "Jiṇṇālayaṃva paridubbalamattabhāvaṃ",
  "anya-e1209n0:240_0": "Disvā naro kathamupeti ratiṃ sapañño?",
  "anya-e1209n0:241_0": "49.",
  "anya-e1209n0:242_0": "Āyukkhayaṃ samupayāti khaṇe khaṇepi",
  "anya-e1209n0:243_0": "Anveti maccu hananāya jarāsipāṇī,",
  "anya-e1209n0:244_0": "Kālaṃ tathā na parivattati taṃ atītaṃ",
  "anya-e1209n0:245_0": "Dukkhaṃ idaṃ nanu bhavesu acintanīyaṃ?",
  "anya-e1209n0:246_0": "50.",
  "anya-e1209n0:247_0": "Appāyukassa maraṇaṃ sulabhaṃ bhavesu",
  "anya-e1209n0:248_0": "Dīghāyukassa ca jarā vyasanaṃ ca’nekaṃ,",
  "anya-e1209n0:249_0": "Evaṃ bhave ubhayatopi ca dukkhameva",
  "anya-e1209n0:250_0": "Dhammaṃ samācaratha dukkhavināsanāya;",
  "anya-e1209n0:251_0": "51.",
  "anya-e1209n0:252_0": "Dukkhagginā sumahatā paripīḷitesu",
  "anya-e1209n0:253_0": "Lokattayassa vasato bhavavārakesu,",
  "anya-e1209n0:254_0": "Sabbattatā sucaritassa pamādakālo",
  "anya-e1209n0:255_0": "Bho bho na hoti paramaṃ kusalaṃ ciṇātha;",
  "anya-e1209n0:256_0": "52.",
  "anya-e1209n0:257_0": "Appaṃ sukhaṃ jalalavaṃ viya bho tiṇagge",
  "anya-e1209n0:258_0": "Dukkhantu sāgarajalaṃ viya sabbaloke,",
  "anya-e1209n0:259_0": "Saṃkappanā tadapi hoti sabhāvato hi",
  "anya-e1209n0:260_0": "Sabbaṃ tilokamapi kevaladukkhameva;",
  "anya-e1209n0:261_0": "53.",
  "anya-e1209n0:262_0": "Kāyo na yassa anugacchati kāyahetu",
  "anya-e1209n0:263_0": "Bālo anekavidhamācaratīha dukkhaṃ,",
  "anya-e1209n0:264_0": "Kāyo sadā kali malākalilañhi loke",
  "anya-e1209n0:265_0": "Kāye rato’navarataṃ vyasanaṃ pareti",
  "anya-e1209n0:266_0": "54.",
  "anya-e1209n0:267_0": "Mīḷhākaraṃ kalimalākaramāmagandhaṃ",
  "anya-e1209n0:268_0": "Sūḷāsisallavisapannagarogabhūtaṃ,",
  "anya-e1209n0:269_0": "Dehaṃ vipassatha jarāmaraṇādhivāsaṃ",
  "anya-e1209n0:270_0": "Tucchaṃ sadā vigatasāramimaṃ vinindyaṃ;",
  "anya-e1209n0:271_0": "55.",
  "anya-e1209n0:272_0": "Dukkhaṃ aniccamasubhaṃ vata attabhāvaṃ",
  "anya-e1209n0:273_0": "Mā saṃkilesaya na vijjati jātu nicco,",
  "anya-e1209n0:274_0": "Ambho na vijjati hi appamapīha sāraṃ",
  "anya-e1209n0:275_0": "Sāraṃ samācaratha dhammamalaṃ pamādaṃ;",
  "anya-e1209n0:276_0": "56.",
  "anya-e1209n0:277_0": "Māyāmarīcikadalīnalapheṇapuñja-",
  "anya-e1209n0:278_0": "Gaṃgātaraṅgajalabubbulasannibhesu,",
  "anya-e1209n0:279_0": "Khandhesu pañcasu chaḷāyatanesu tesu",
  "anya-e1209n0:280_0": "Attā na vijjati hi ko na vadeyya’bālo?",
  "anya-e1209n0:281_0": "57.",
  "anya-e1209n0:282_0": "Vañjhāsuto sasavisāṇamaye rathe tu,",
  "anya-e1209n0:283_0": "Dhāveyya ce cirataraṃ sadhuraṃ gahetvā,",
  "anya-e1209n0:284_0": "Dīpaccimālamiva taṃ khaṇabhaṅgabhūtaṃ",
  "anya-e1209n0:285_0": "Attāti dubbalatarantu vadeyya dehaṃ;",
  "anya-e1209n0:286_0": "58.",
  "anya-e1209n0:287_0": "Bālo yathā salilabubbulabhājanena",
  "anya-e1209n0:288_0": "Ākaṇṭhato vata pibeyya marīcitoyaṃ,",
  "anya-e1209n0:289_0": "Attāni sārarahitaṃ kadalīsamānaṃ",
  "anya-e1209n0:290_0": "Mohā bhaṇeyya khalu dehamimaṃ anattaṃ;",
  "anya-e1209n0:291_0": "59.",
  "anya-e1209n0:292_0": "Yo’dumbarassa kusumena marīcitoyaṃ",
  "anya-e1209n0:293_0": "Vāsaṃ yadicchati sa khedamupeti bālo,",
  "anya-e1209n0:294_0": "Attānameva parihaññati attahetu",
  "anya-e1209n0:295_0": "Attā na vijjati kadācidapīha dehe;",
  "anya-e1209n0:296_0": "60.",
  "anya-e1209n0:297_0": "Poso yathā hi kadalī suvinibbhujanto",
  "anya-e1209n0:298_0": "Sāraṃ tadappampi nopalabheyya kāmaṃ,",
  "anya-e1209n0:299_0": "Khandhesu paṃcasu chaḷāyatanesu tesu",
  "anya-e1209n0:300_0": "Suññesu kiñcidapi nopalabheyya sāraṃ;",
  "anya-e1209n0:301_0": "61.",
  "anya-e1209n0:302_0": "Suttaṃ vinā na paṭabhāvamihatthi kiṃci",
  "anya-e1209n0:303_0": "Dehaṃ vinā na khalu koci mihatthi satto,",
  "anya-e1209n0:304_0": "Deho sabhāvarahito khaṇabhaṃgayutto,",
  "anya-e1209n0:305_0": "Ko attahetu aparo bhuvi vijjatīha?",
  "anya-e1209n0:306_0": "62.",
  "anya-e1209n0:307_0": "Disvā marīcisalilañhi sudūrato bho",
  "anya-e1209n0:308_0": "Bālo migo samupadhāvati toyasaññī,",
  "anya-e1209n0:309_0": "Evaṃ sabhāvarahite viparītasiddhe",
  "anya-e1209n0:310_0": "Dehe pareti parikappanayā hi rāgaṃ;",
  "anya-e1209n0:311_0": "63.",
  "anya-e1209n0:312_0": "Dehe sabhāvarahite parikappasiddhe",
  "anya-e1209n0:313_0": "Attā na vijjati hi vijjumivantalikkhe,",
  "anya-e1209n0:314_0": "Bhāvetha bhāvanaratā vigatappamādā",
  "anya-e1209n0:315_0": "Sabbāsavappahananāya anattasaññaṃ;",
  "anya-e1209n0:316_0": "64.",
  "anya-e1209n0:317_0": "Lālākarīsarudhirassuvasānulittaṃ",
  "anya-e1209n0:318_0": "Dehaṃ imaṃ kalimalākalilaṃ asāraṃ,",
  "anya-e1209n0:319_0": "Sattā sadā pariharanti jigucchanīyaṃ",
  "anya-e1209n0:320_0": "Nānāsucīhi paripuṇṇaghaṭaṃ yatheva;",
  "anya-e1209n0:321_0": "65.",
  "anya-e1209n0:322_0": "Ṇahātvā jalañhi sakalaṃ catusāgarassa",
  "anya-e1209n0:323_0": "Meruppamāṇamapi gandhamanuttarañca,",
  "anya-e1209n0:324_0": "Pappoti neva manujo hi suciṃ kadāci",
  "anya-e1209n0:325_0": "Kiṃ bho vipassatha guṇaṃ kimu attabhāve?",
  "anya-e1209n0:326_0": "66.",
  "anya-e1209n0:327_0": "Deho sa eva vividhāsucisannidhāno",
  "anya-e1209n0:328_0": "Deho sa eva vadhabandhanarogabhūto,",
  "anya-e1209n0:329_0": "Deho sa eva navadhā paribhinnagaṇḍo",
  "anya-e1209n0:330_0": "Dehaṃ vinā bhayakaraṃ na susānamatthi;",
  "anya-e1209n0:331_0": "67.",
  "anya-e1209n0:332_0": "Antogataṃ yadiva muttakarīsabhāgo",
  "anya-e1209n0:333_0": "Dehā bahiṃ aticareyya vinikkhamitvā,",
  "anya-e1209n0:334_0": "Mātā pitā vikaruṇā ca vinaṭṭhapemā",
  "anya-e1209n0:335_0": "Kāmaṃ bhaveyyu kimu bandhusutā ca dārā?",
  "anya-e1209n0:336_0": "68.",
  "anya-e1209n0:337_0": "Dehaṃ yathā navamukhaṃ kimisaṅghagehaṃ",
  "anya-e1209n0:338_0": "Maṃsaṭṭhisedarudhirākalilaṃ vigandhaṃ,",
  "anya-e1209n0:339_0": "Posenti ye vividhapāpamihācaritvā",
  "anya-e1209n0:340_0": "Te mohitā maraṇadhammamaho vatevaṃ!",
  "anya-e1209n0:341_0": "69.",
  "anya-e1209n0:342_0": "Gaṇḍūpame vividharoga nivāsabhūte",
  "anya-e1209n0:343_0": "Kāye sadā rudhiramuttakarīsapuṇṇe,",
  "anya-e1209n0:344_0": "Yo ettha nandati naro sasigālabhakkhe",
  "anya-e1209n0:345_0": "Kāmañhi socati parattha sa bālabuddhi;",
  "anya-e1209n0:346_0": "70.",
  "anya-e1209n0:347_0": "Bho pheṇapiṇḍasadiso viya sārahīno",
  "anya-e1209n0:348_0": "Mīḷhālayo viya sadā paṭikūlagandho,",
  "anya-e1209n0:349_0": "Āsīvisālayanibho sabhayo sadukkho",
  "anya-e1209n0:350_0": "Deho sadā savati loṇaghaṭova bhinno;",
  "anya-e1209n0:351_0": "71.",
  "anya-e1209n0:352_0": "Jātaṃ yathā na kamalaṃ bhuvi nindanīyaṃ",
  "anya-e1209n0:353_0": "Paṅkesu bho asucitoya samākulesu,",
  "anya-e1209n0:354_0": "Jātaṃ tathā parahitampi ca dehabhūtaṃ",
  "anya-e1209n0:355_0": "Taṃ nindanīyamiha jātu na hoti loke;",
  "anya-e1209n0:356_0": "72.",
  "anya-e1209n0:357_0": "Dvattiṃsabhāgaparipūrataro viseso",
  "anya-e1209n0:358_0": "Kāyo yathā hi naranāri gaṇassa loke,",
  "anya-e1209n0:359_0": "Kāyesu kiṃ phalamihatthi ca paṇḍitānaṃ",
  "anya-e1209n0:360_0": "Kāmaṃ tadeva nanu hoti paropakāraṃ;",
  "anya-e1209n0:361_0": "73.",
  "anya-e1209n0:362_0": "Posona paṇḍitatarena tathāpi deho",
  "anya-e1209n0:363_0": "Sabbattanā cirataraṃ paripālanīyo,",
  "anya-e1209n0:364_0": "Dhammaṃ careyya suciraṃ khalu jīvamāno",
  "anya-e1209n0:365_0": "Dhamme have maṇivaro iva kāmado bho",
  "anya-e1209n0:366_0": "74.",
  "anya-e1209n0:367_0": "Khīre yathā suparibhāvitamosadhamhi",
  "anya-e1209n0:368_0": "Snehena osadhabalaṃ paribhāsateva,",
  "anya-e1209n0:369_0": "Dhammo tathā iha samācarito hi loke",
  "anya-e1209n0:370_0": "Chāyāva yāti paraloka mito vajantaṃ;",
  "anya-e1209n0:371_0": "75.",
  "anya-e1209n0:372_0": "Kāyassa bho viracitassa yathānukūlaṃ",
  "anya-e1209n0:373_0": "Chāyā vibhāti rucirāmaladappaṇe tu,",
  "anya-e1209n0:374_0": "Katvā tatheva paramaṃ kusalaṃ parattha",
  "anya-e1209n0:375_0": "Sambhūsitā iva bhavanti phalena tena;",
  "anya-e1209n0:376_0": "76.",
  "anya-e1209n0:377_0": "Dehe tathā vividhadukkha nivāsabhūte",
  "anya-e1209n0:378_0": "Mohā pamādavasagā sukhasaññamūḷhā,",
  "anya-e1209n0:379_0": "Tikkhe yathā khuramukhe madhulehamāno",
  "anya-e1209n0:380_0": "Bāḷhañca dukkhamanugacchati hīnapañño;",
  "anya-e1209n0:381_0": "77.",
  "anya-e1209n0:382_0": "Saṃkapparāgavigate niratattabhāve",
  "anya-e1209n0:383_0": "Dukkhaṃ sadā samadhigacchati appapañño,",
  "anya-e1209n0:384_0": "Mūḷhassa ceva sukhasaññamihatthiloke",
  "anya-e1209n0:385_0": "Kiṃpakkameva nanu hoti vicāramāne;",
  "anya-e1209n0:386_0": "78.",
  "anya-e1209n0:387_0": "Sabbopabhoga dhanadhaññavisesalābhī",
  "anya-e1209n0:388_0": "Rūpena bho sa makaraddhajasannibhopi,",
  "anya-e1209n0:389_0": "Yo yobbanepi maraṇaṃ labhate akāmaṃ",
  "anya-e1209n0:390_0": "Kāmaṃ paratthaparapāṇaharo naro hi;",
  "anya-e1209n0:391_0": "79.",
  "anya-e1209n0:392_0": "So yācako bhavati bhinnakapālahattho",
  "anya-e1209n0:393_0": "Muṇḍo dhigakkharasatehi ca tajjayanto,",
  "anya-e1209n0:394_0": "Bhikkhaṃ sadāribhavane sakucelavāso",
  "anya-e1209n0:395_0": "Dehe paratthi paracittaharo naro yo;",
  "anya-e1209n0:396_0": "80.",
  "anya-e1209n0:397_0": "Itthī namuñcati sadā puna itthibhāvā",
  "anya-e1209n0:398_0": "Nārī sadā bhavati so puriso parattha,",
  "anya-e1209n0:399_0": "Yo ācareyya paradāramalaṅghanīyaṃ",
  "anya-e1209n0:400_0": "Ghorañca vindati sadā vyasanañca nekaṃ;",
  "anya-e1209n0:401_0": "81.",
  "anya-e1209n0:402_0": "Dīno vigandhavadano ca jaḷo apañño",
  "anya-e1209n0:403_0": "Mūgo sadā bhavati appiyadassano ca,",
  "anya-e1209n0:404_0": "Pappoti dukkhamatulañca manussabhūto",
  "anya-e1209n0:405_0": "Vācaṃ musā bhaṇati yo hi apaññasatto;",
  "anya-e1209n0:406_0": "82.",
  "anya-e1209n0:407_0": "Ummattakā vigatalajjaguṇā bhavanti",
  "anya-e1209n0:408_0": "Dīnā sadā vyasanasokaparāyaṇā ca,",
  "anya-e1209n0:409_0": "Jātā bhavesu vividhesu virūpadehā",
  "anya-e1209n0:410_0": "Pītvā halāhalavisaṃva suraṃ vipaññā;",
  "anya-e1209n0:411_0": "83.",
  "anya-e1209n0:412_0": "Pāpāni yena iha ācaritāni yāni",
  "anya-e1209n0:413_0": "Yo vassakoṭinahutāni anappakāni,",
  "anya-e1209n0:414_0": "Laddhāna ghoramatulaṃ narakesu dukkhaṃ",
  "anya-e1209n0:415_0": "Pappoti cettha vividhavyasanañca nekaṃ;",
  "anya-e1209n0:416_0": "84.",
  "anya-e1209n0:417_0": "Lokattayesu sakalesu samaṃ na kiṃci",
  "anya-e1209n0:418_0": "Lokassa santikaraṇaṃ ratanattayena,",
  "anya-e1209n0:419_0": "Taṃtejasā sumahatā jitasabbapāpo",
  "anya-e1209n0:420_0": "Sohaṃ sadādhigatasabbasukho bhaveyyaṃ;",
  "anya-e1209n0:421_0": "85.",
  "anya-e1209n0:422_0": "Lokattayesu sakalesu ca sabbasattā",
  "anya-e1209n0:423_0": "Mittā ca majjharipubandhujanā ca sabbe,",
  "anya-e1209n0:424_0": "Te sabbadā vigatarogabhayā visokā",
  "anya-e1209n0:425_0": "Sabbaṃ sukhaṃ adhigatā muditā bhavantu;",
  "anya-e1209n0:426_0": "86.",
  "anya-e1209n0:427_0": "Kāyo karīsabharito viya bhinnakumbho",
  "anya-e1209n0:428_0": "Kāyo sadā kalimalavyasanādhivāso,",
  "anya-e1209n0:429_0": "Kāye vihaññati ca sabbasukhanti loko",
  "anya-e1209n0:430_0": "Kāyo sadā maraṇarogajarādhivāso;",
  "anya-e1209n0:431_0": "87.",
  "anya-e1209n0:432_0": "So yobbanoti thaviroti ca bālakoti",
  "anya-e1209n0:433_0": "Satte na pekkhati vihaññatireva maccu,",
  "anya-e1209n0:434_0": "Sohaṃ ṭhitopi sayitopi ca pakkamanto",
  "anya-e1209n0:435_0": "Gacchāmi maccuvadanaṃ niyataṃ tathā hi;",
  "anya-e1209n0:436_0": "88.",
  "anya-e1209n0:437_0": "Evaṃ yathā vihitadosamidaṃ sarīraṃ",
  "anya-e1209n0:438_0": "Niccaṃva taggatamanā hadaye karotha,",
  "anya-e1209n0:439_0": "Mettaṃ parittamasubhaṃ maraṇassatiñca",
  "anya-e1209n0:440_0": "Bhāvetha bhāvanaratā satataṃ yatattā;",
  "anya-e1209n0:441_0": "89.",
  "anya-e1209n0:442_0": "Dānādi puññakiriyāni sukhudrayāni",
  "anya-e1209n0:443_0": "Katvā ca tamphalamasesa mihappameyyaṃ,",
  "anya-e1209n0:444_0": "Deyyaṃ sadā parahitāya sukhāya ceva",
  "anya-e1209n0:445_0": "Kimbho tadeva nanu hatthagatañhi sāraṃ?",
  "anya-e1209n0:446_0": "90.",
  "anya-e1209n0:447_0": "Hetuṃ vinā na bhavatī hi ca kiṃci loke",
  "anya-e1209n0:448_0": "Saddova pāṇitalaghaṭṭanahetujāto,",
  "anya-e1209n0:449_0": "Evañca hetuphala bhāvavibhāgabhinno",
  "anya-e1209n0:450_0": "Loko udeti ca vinassati tiṭṭhatī ca;",
  "anya-e1209n0:451_0": "91.",
  "anya-e1209n0:452_0": "Kammassa kāraṇāmayañhi yathā avijjā",
  "anya-e1209n0:453_0": "Bho kammanā samadhigacchati jātibhedaṃ,",
  "anya-e1209n0:454_0": "Jātiṃ paṭicca ca jarāmaraṇādidukkhaṃ",
  "anya-e1209n0:455_0": "Sattā sadā paṭilabhanti anādikāle;",
  "anya-e1209n0:456_0": "92.",
  "anya-e1209n0:457_0": "Kammaṃ yathā na bhavatīha ca mohanāsā",
  "anya-e1209n0:458_0": "Kammakkhayāpi ca na hoti bhavesu jāti,",
  "anya-e1209n0:459_0": "Jātikkhayā iha jarāmaraṇādidukkhaṃ",
  "anya-e1209n0:460_0": "Sabbakkhayo bhavati dīpevānilena;",
  "anya-e1209n0:461_0": "93.",
  "anya-e1209n0:462_0": "Yo passatīha satataṃ munidhammakāyaṃ",
  "anya-e1209n0:463_0": "Buddhaṃ sa passati naro iti so avoca,",
  "anya-e1209n0:464_0": "Buddhañca dhammamamalañca tilokanāthaṃ",
  "anya-e1209n0:465_0": "Sampassituṃ vicinathā’pi ca dhammataṃ bho;",
  "anya-e1209n0:466_0": "94.",
  "anya-e1209n0:467_0": "Sallaṃva bho sunisitaṃ hadaye nimuggaṃ",
  "anya-e1209n0:468_0": "Dosattayaṃ vividhapāpamalena littaṃ,",
  "anya-e1209n0:469_0": "Nānāvidhabyasanabhājanamappasannaṃ",
  "anya-e1209n0:470_0": "Paññāmayena balisena nirākarotha;",
  "anya-e1209n0:471_0": "95.",
  "anya-e1209n0:472_0": "Nākampayanti sakalāpi ca lokadhammā",
  "anya-e1209n0:473_0": "Cittaṃ sadāpagatapāpakilesasallaṃ,",
  "anya-e1209n0:474_0": "Rūpādayo ca vividhā visayā samaggā",
  "anya-e1209n0:475_0": "Phuṭṭhaṃva merusikharaṃ mahatānilena;",
  "anya-e1209n0:476_0": "96.",
  "anya-e1209n0:477_0": "Saṃsāradukkhamagaṇeyya yathā munindo",
  "anya-e1209n0:478_0": "Gambhirapāramita sāgaramuttaritvā,",
  "anya-e1209n0:479_0": "Ñeyyaṃ abodhi nipuṇaṃ hatamohajālo",
  "anya-e1209n0:480_0": "Tasmā sadā parahitaṃ paramaṃ ciṇātha;",
  "anya-e1209n0:481_0": "97.",
  "anya-e1209n0:482_0": "Ohāya so’dhigatamokkhasukhaṃ paresaṃ",
  "anya-e1209n0:483_0": "Atthāya saṃcari bhavesu mahabbhayesu,",
  "anya-e1209n0:484_0": "Evaṃ sadā parahitaṃ purato karitvā",
  "anya-e1209n0:485_0": "Dhammo mayānucarito jagadatthameva;",
  "anya-e1209n0:486_0": "98.",
  "anya-e1209n0:487_0": "Laddhāna dullabhatarañca manussayoniṃ",
  "anya-e1209n0:488_0": "Sabbaṃ papañcarahitaṃ khaṇasampadañca,",
  "anya-e1209n0:489_0": "Ñatvāna āsavanudekahitañca dhammaṃ",
  "anya-e1209n0:490_0": "Ko paññavā anavaraṃ na bhajeyya dhammaṃ?",
  "anya-e1209n0:491_0": "99.",
  "anya-e1209n0:492_0": "Laddhāna buddhasamayaṃ atidullabhaṃca",
  "anya-e1209n0:493_0": "Saddhamma maggamasamaṃ sivadaṃ tatheva,",
  "anya-e1209n0:494_0": "Kalyāṇamittapavare matisampadañca",
  "anya-e1209n0:495_0": "Ko buddhimā anavaraṃ na bhajeyya dhammaṃ?",
  "anya-e1209n0:496_0": "100.",
  "anya-e1209n0:497_0": "Evampi dullabhataraṃ vibhave suladdhā",
  "anya-e1209n0:498_0": "Maccheradosa viratā ubhayatthakāmā,",
  "anya-e1209n0:499_0": "Saddhādidhammasahitā satatappamattā",
  "anya-e1209n0:500_0": "Bho! Bho! Karotha amatādhigamāya puññaṃ;"
}