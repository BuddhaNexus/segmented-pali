{
  "cp14:0.1_0": "Cariyāpiṭaka",
  "cp14:0.2_0": "Hatthināgavagga",
  "cp14:0.3_0": "Sīlapāramī 4",
  "cp14:0.4_0": "Cūḷabodhicariya",
  "cp14:1.1_0": "“Punāparaṁ yadā homi,",
  "cp14:1.2_0": "cūḷabodhi susīlavā;",
  "cp14:1.3_0": "Bhavaṁ disvāna bhayato,",
  "cp14:1.4_0": "nekkhammaṁ abhinikkhamiṁ.",
  "cp14:2.1_0": "Yā me dutiyikā āsi,",
  "cp14:2.2_0": "brāhmaṇī kanakasannibhā;",
  "cp14:2.3_0": "Sāpi vaṭṭe anapekkhā,",
  "cp14:2.4_0": "nekkhammaṁ abhinikkhami.",
  "cp14:3.1_0": "Nirālayā chinnabandhū,",
  "cp14:3.2_0": "anapekkhā kule gaṇe;",
  "cp14:3.3_0": "Carantā gāmanigamaṁ,",
  "cp14:3.4_0": "bārāṇasimupāgamuṁ.",
  "cp14:4.1_0": "Tattha vasāma nipakā,",
  "cp14:4.2_0": "asaṁsaṭṭhā kule gaṇe;",
  "cp14:4.3_0": "Nirākule appasadde,",
  "cp14:4.4_0": "rājuyyāne vasāmubho.",
  "cp14:5.1_0": "Uyyānadassanaṁ gantvā,",
  "cp14:5.2_0": "rājā addasa brāhmaṇiṁ;",
  "cp14:5.3_0": "Upagamma mamaṁ pucchi,",
  "cp14:5.4_0": "‘tuyhesā kā kassa bhariyā’.",
  "cp14:6.1_0": "Evaṁ vutte, ahaṁ tassa,",
  "cp14:6.2_0": "idaṁ vacanamabraviṁ;",
  "cp14:6.3_0": "‘Na mayhaṁ bhariyā esā,",
  "cp14:6.4_0": "sahadhammā ekasāsanī’.",
  "cp14:7.1_0": "Tissā sārattagadhito,",
  "cp14:7.2_0": "gāhāpetvāna ceṭake;",
  "cp14:7.3_0": "Nippīḷayanto balasā,",
  "cp14:7.4_0": "antepuraṁ pavesayi.",
  "cp14:8.1_0": "Odapattakiyā mayhaṁ,",
  "cp14:8.2_0": "sahajā ekasāsanī;",
  "cp14:8.3_0": "Ākaḍḍhitvā nayantiyā,",
  "cp14:8.4_0": "kopo me upapajjatha.",
  "cp14:9.1_0": "Saha kope samuppanne,",
  "cp14:9.2_0": "sīlabbatamanussariṁ;",
  "cp14:9.3_0": "Tattheva kopaṁ niggaṇhiṁ,",
  "cp14:9.4_0": "nādāsiṁ vaḍḍhitūpari.",
  "cp14:10.1_0": "Yadi naṁ brāhmaṇiṁ koci,",
  "cp14:10.2_0": "koṭṭeyya tiṇhasattiyā;",
  "cp14:10.3_0": "Neva sīlaṁ pabhindeyyaṁ,",
  "cp14:10.4_0": "bodhiyāyeva kāraṇā.",
  "cp14:11.1_0": "Na mesā brāhmaṇī dessā,",
  "cp14:11.2_0": "napi me balaṁ na vijjati;",
  "cp14:11.3_0": "Sabbaññutaṁ piyaṁ mayhaṁ,",
  "cp14:11.4_0": "tasmā sīlānurakkhisan”ti.",
  "cp14:12.1_0": "Cūḷabodhicariyaṁ catutthaṁ."
}