{
  "thig3.2:0.1_0": "Therīgāthā 3.2",
  "thig3.2:0.2_0": "Tikanipāta",
  "thig3.2:0.3_0": "Uttamātherīgāthā",
  "thig3.2:1.1_0": "“Catukkhattuṁ pañcakkhattuṁ,",
  "thig3.2:1.2_0": "vihārā upanikkhamiṁ;",
  "thig3.2:1.3_0": "Aladdhā cetaso santiṁ,",
  "thig3.2:1.4_0": "citte avasavattinī.",
  "thig3.2:2.1_0": "Sā bhikkhuniṁ upagacchiṁ,",
  "thig3.2:2.2_0": "yā me saddhāyikā ahu;",
  "thig3.2:2.3_0": "Sā me dhammamadesesi,",
  "thig3.2:2.4_0": "khandhāyatanadhātuyo.",
  "thig3.2:3.1_0": "Tassā dhammaṁ suṇitvāna,",
  "thig3.2:3.2_0": "Yathā maṁ anusāsi sā;",
  "thig3.2:3.3_0": "Sattāhaṁ ekapallaṅkena,",
  "thig3.2:3.4_0": "Nisīdiṁ pītisukhasamappitā;",
  "thig3.2:3.5_0": "Aṭṭhamiyā pāde pasāresiṁ,",
  "thig3.2:3.6_0": "Tamokhandhaṁ padāliyā”ti.",
  "thig3.2:4.1_0": "… Uttamā therī …."
}