{
  "atk-s0404a28:0_0": "(14) 4. Sādhuvaggavaṇṇanā",
  "atk-s0404a28:1_0": "134.",
  "atk-s0404a28:1_1": "Catutthassa paṭhame sādhunti bhaddakaṁ siliṭṭhakaṁ.",
  "atk-s0404a28:1_2": "Dutiyādīni uttānatthānevāti.",
  "atk-s0404a28:1_3": "Ariyamaggavaggo uttānatthoyevāti.",
  "atk-s0404a28:2_0": "Sādhuvaggo catuttho.",
  "atk-s0404a28:3_0": "Tatiyapaṇṇāsakaṁ niṭṭhitaṁ.",
  "atk-s0404a28:4_0": "4. Catutthapaṇṇāsakaṁ",
  "atk-s0404a28:5_0": "155. Catutthassa paṭhamādīni uttānatthānevāti.",
  "atk-s0404a28:6_0": "8. Kammanidānasuttavaṇṇanā",
  "atk-s0404a28:7_0": "174.",
  "atk-s0404a28:7_1": "Aṭṭhame lobhahetukampīti pāṇātipātassa lobho upanissayakoṭiyā hetu hoti dosamohasampayuttopi.",
  "atk-s0404a28:7_2": "Iminā upāyena sabbattha attho veditabbo.",
  "atk-s0404a28:8_0": "9. Parikkamanasuttavaṇṇanā",
  "atk-s0404a28:9_0": "175. Navame parikkamanaṁ hotīti parivajjanaṁ hoti.",
  "atk-s0404a28:10_0": "10. Cundasuttavaṇṇanā",
  "atk-s0404a28:11_0": "176.",
  "atk-s0404a28:11_1": "Dasame kammāraputtassāti suvaṇṇakāraputtassa.",
  "atk-s0404a28:11_2": "Kassa no tvanti kassa nu tvaṁ.",
  "atk-s0404a28:11_3": "Pacchābhūmakāti pacchābhūmivāsikā.",
  "atk-s0404a28:11_4": "Kamaṇḍalukāti kamaṇḍaludhārino.",
  "atk-s0404a28:11_5": "Sevālamālikāti sevālamālā viya dhārenti.",
  "atk-s0404a28:11_6": "Sevālapaṭanivāsitātipi vuttameva.",
  "atk-s0404a28:11_7": "Udakorohakāti sāyatatiyakaṁ udakorohanānuyogamanuyuttā.",
  "atk-s0404a28:11_8": "Āmaseyyāsīti hatthena parimajjeyyāsi.",
  "atk-s0404a28:12_0": "11. Jāṇussoṇisuttavaṇṇanā",
  "atk-s0404a28:13_0": "177.",
  "atk-s0404a28:13_1": "Ekādasame upakappatūti pāpuṇātu.",
  "atk-s0404a28:13_2": "Ṭhāneti okāse.",
  "atk-s0404a28:13_3": "No aṭṭhāneti no anokāse.",
  "atk-s0404a28:13_4": "Nerayikānaṁāhāro nāma tattha nibbattanakammameva.",
  "atk-s0404a28:13_5": "Teneva hi te tattha yāpenti.",
  "atk-s0404a28:13_6": "Tiracchānayonikānaṁ pana tiṇapaṇṇādivasena āhāro veditabbo.",
  "atk-s0404a28:13_7": "Manussānaṁ odanakummāsādivasena,",
  "atk-s0404a28:13_8": "devānaṁ sudhābhojanādivasena,",
  "atk-s0404a28:13_9": "pettivesayikānaṁ kheḷasiṅghāṇikādivasena.",
  "atk-s0404a28:13_10": "Yaṁ vā panassa ito anuppavecchantīti yaṁ tassa mittādayo ito dadantā anupavesenti.",
  "atk-s0404a28:13_11": "Pettivesayikā eva hi paradattūpajīvino honti,",
  "atk-s0404a28:13_12": "na aññesaṁ parehi dinnaṁ upakappati.",
  "atk-s0404a28:13_13": "Dāyakopi anipphaloti yaṁ sandhāya taṁ dānaṁ dinnaṁ,",
  "atk-s0404a28:13_14": "tassa upakappatu vā mā vā,",
  "atk-s0404a28:13_15": "dāyakena pana na sakkā nipphalena bhavituṁ,",
  "atk-s0404a28:13_16": "dāyako tassa dānassa vipākaṁ labhatiyeva.",
  "atk-s0404a28:14_0": "Aṭṭhānepi bhavaṁ gotamo parikappaṁ vadatīti anokāse uppannepi tasmiṁ ñātake bhavaṁ gotamo dānassa phalaṁ parikappetiyeva paññāpetiyevāti pucchati.",
  "atk-s0404a28:14_1": "Brāhmaṇassa hi “evaṁ dinnassa dānassa phalaṁ dāyako na labhatī”ti laddhi.",
  "atk-s0404a28:14_2": "Athassa bhagavā pañhaṁ paṭijānitvā “dāyako nāma yattha katthaci puññaphalūpajīviṭṭhāne nibbatto dānassa",
  "atk-s0404a28:14_3": "phalaṁ labhatiyevā”ti dassetuṁ idha brāhmaṇātiādimāha.",
  "atk-s0404a28:14_4": "So tattha lābhī hotīti so tattha hatthiyoniyaṁ nibbattopi maṅgalahatthiṭṭhānaṁ patvā lābhī hoti.",
  "atk-s0404a28:14_5": "Assādīsupi eseva nayo.",
  "atk-s0404a28:14_6": "Sādhuvaggo uttānatthoyevāti.",
  "atk-s0404a28:15_0": "Jāṇussoṇivaggo dutiyo.",
  "atk-s0404a28:16_0": "Catutthapaṇṇāsakaṁ niṭṭhitaṁ."
}