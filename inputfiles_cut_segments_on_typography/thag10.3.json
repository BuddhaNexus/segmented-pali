{
  "thag10.3:0.1_0": "Theragāthā 10.3",
  "thag10.3:0.2_0": "Dasakanipāta",
  "thag10.3:0.3_0": "Paṭhamavagga",
  "thag10.3:0.4_0": "Mahākappinattheragāthā",
  "thag10.3:1.1_0": "“Anāgataṁ yo paṭikacca passati,",
  "thag10.3:1.2_0": "Hitañca atthaṁ ahitañca taṁ dvayaṁ;",
  "thag10.3:1.3_0": "Viddesino tassa hitesino vā,",
  "thag10.3:1.4_0": "Randhaṁ na passanti samekkhamānā.",
  "thag10.3:2.1_0": "Ānāpānasatī yassa,",
  "thag10.3:2.2_0": "paripuṇṇā subhāvitā;",
  "thag10.3:2.3_0": "Anupubbaṁ paricitā,",
  "thag10.3:2.4_0": "yathā buddhena desitā;",
  "thag10.3:2.5_0": "Somaṁ lokaṁ pabhāseti,",
  "thag10.3:2.6_0": "abbhā muttova candimā.",
  "thag10.3:3.1_0": "Odātaṁ vata me cittaṁ,",
  "thag10.3:3.2_0": "appamāṇaṁ subhāvitaṁ;",
  "thag10.3:3.3_0": "Nibbiddhaṁ paggahītañca,",
  "thag10.3:3.4_0": "sabbā obhāsate disā.",
  "thag10.3:4.1_0": "Jīvate vāpi sappañño,",
  "thag10.3:4.2_0": "api vittaparikkhayo;",
  "thag10.3:4.3_0": "Paññāya ca alābhena,",
  "thag10.3:4.4_0": "vittavāpi na jīvati.",
  "thag10.3:5.1_0": "Paññā sutavinicchinī,",
  "thag10.3:5.2_0": "Paññā kittisilokavaddhanī;",
  "thag10.3:5.3_0": "Paññāsahito naro idha,",
  "thag10.3:5.4_0": "Api dukkhesu sukhāni vindati.",
  "thag10.3:6.1_0": "Nāyaṁ ajjatano dhammo,",
  "thag10.3:6.2_0": "nacchero napi abbhuto;",
  "thag10.3:6.3_0": "Yattha jāyetha mīyetha,",
  "thag10.3:6.4_0": "tattha kiṁ viya abbhutaṁ.",
  "thag10.3:7.1_0": "Anantaraṁ hi jātassa,",
  "thag10.3:7.2_0": "jīvitā maraṇaṁ dhuvaṁ;",
  "thag10.3:7.3_0": "Jātā jātā marantīdha,",
  "thag10.3:7.4_0": "evaṁdhammā hi pāṇino.",
  "thag10.3:8.1_0": "Na hetadatthāya matassa hoti,",
  "thag10.3:8.2_0": "Yaṁ jīvitatthaṁ paraporisānaṁ;",
  "thag10.3:8.3_0": "Matamhi ruṇṇaṁ na yaso na lokyaṁ,",
  "thag10.3:8.4_0": "Na vaṇṇitaṁ samaṇabrāhmaṇehi.",
  "thag10.3:9.1_0": "Cakkhuṁ sarīraṁ upahanti tena,",
  "thag10.3:9.2_0": "Nihīyati vaṇṇabalaṁ matī ca;",
  "thag10.3:9.3_0": "Ānandino tassa disā bhavanti,",
  "thag10.3:9.4_0": "Hitesino nāssa sukhī bhavanti.",
  "thag10.3:10.1_0": "Tasmā hi iccheyya kule vasante,",
  "thag10.3:10.2_0": "Medhāvino ceva bahussute ca;",
  "thag10.3:10.3_0": "Yesaṁ hi paññāvibhavena kiccaṁ,",
  "thag10.3:10.4_0": "Taranti nāvāya nadiṁva puṇṇan”ti.",
  "thag10.3:10.5_0": "… Mahākappino thero …."
}