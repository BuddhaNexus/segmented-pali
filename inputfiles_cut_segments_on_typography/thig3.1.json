{
  "thig3.1:0.1_0": "Therīgāthā 3.1",
  "thig3.1:0.2_0": "Tikanipāta",
  "thig3.1:0.3_0": "Aparāsāmātherīgāthā",
  "thig3.1:1.1_0": "“Paṇṇavīsativassāni,",
  "thig3.1:1.2_0": "yato pabbajitāya me;",
  "thig3.1:1.3_0": "Nābhijānāmi cittassa,",
  "thig3.1:1.4_0": "samaṁ laddhaṁ kudācanaṁ.",
  "thig3.1:2.1_0": "Aladdhā cetaso santiṁ,",
  "thig3.1:2.2_0": "citte avasavattinī;",
  "thig3.1:2.3_0": "Tato saṁvegamāpādiṁ,",
  "thig3.1:2.4_0": "saritvā jinasāsanaṁ.",
  "thig3.1:3.1_0": "Bahūhi dukkhadhammehi,",
  "thig3.1:3.2_0": "appamādaratāya me;",
  "thig3.1:3.3_0": "Taṇhakkhayo anuppatto,",
  "thig3.1:3.4_0": "kataṁ buddhassa sāsanaṁ;",
  "thig3.1:3.5_0": "Ajja me sattamī ratti,",
  "thig3.1:3.6_0": "yato taṇhā visositā”ti.",
  "thig3.1:4.1_0": "… Aparā sāmā therī …."
}