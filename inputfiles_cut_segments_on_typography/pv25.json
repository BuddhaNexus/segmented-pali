{
  "pv25:0.1_0": "Petavatthu",
  "pv25:0.2_0": "Ubbarivagga",
  "pv25:0.3_0": "13. Ubbaripetavatthu",
  "pv25:1.1_0": "Ahu rājā brahmadatto,",
  "pv25:1.2_0": "pañcālānaṁ rathesabho;",
  "pv25:1.3_0": "Ahorattānamaccayā,",
  "pv25:1.4_0": "rājā kālamakrubbatha.",
  "pv25:2.1_0": "Tassa āḷāhanaṁ gantvā,",
  "pv25:2.2_0": "bhariyā kandati ubbarī;",
  "pv25:2.3_0": "Brahmadattaṁ apassantī,",
  "pv25:2.4_0": "brahmadattāti kandati.",
  "pv25:3.1_0": "Isi ca tattha āgacchi,",
  "pv25:3.2_0": "sampannacaraṇo muni;",
  "pv25:3.3_0": "So ca tattha apucchittha,",
  "pv25:3.4_0": "ye tattha susamāgatā.",
  "pv25:4.1_0": "“Kassa idaṁ āḷāhanaṁ,",
  "pv25:4.2_0": "nānāgandhasameritaṁ;",
  "pv25:4.3_0": "Kassāyaṁ kandati bhariyā,",
  "pv25:4.4_0": "ito dūragataṁ patiṁ;",
  "pv25:4.5_0": "Brahmadattaṁ apassantī,",
  "pv25:4.6_0": "‘brahmadattā’ti kandati”.",
  "pv25:5.1_0": "Te ca tattha viyākaṁsu,",
  "pv25:5.2_0": "ye tattha susamāgatā;",
  "pv25:5.3_0": "“Brahmadattassa bhadante,",
  "pv25:5.4_0": "brahmadattassa mārisa.",
  "pv25:6.1_0": "Tassa idaṁ āḷāhanaṁ,",
  "pv25:6.2_0": "nānāgandhasameritaṁ;",
  "pv25:6.3_0": "Tassāyaṁ kandati bhariyā,",
  "pv25:6.4_0": "ito dūragataṁ patiṁ;",
  "pv25:6.5_0": "Brahmadattaṁ apassantī,",
  "pv25:6.6_0": "‘brahmadattā’ti kandati”.",
  "pv25:7.1_0": "“Chaḷāsītisahassāni,",
  "pv25:7.2_0": "brahmadattassanāmakā;",
  "pv25:7.3_0": "Imasmiṁ āḷāhane daḍḍhā,",
  "pv25:7.4_0": "tesaṁ kamanusocasī”ti.",
  "pv25:8.1_0": "“Yo rājā cūḷanīputto,",
  "pv25:8.2_0": "pañcālānaṁ rathesabho;",
  "pv25:8.3_0": "Taṁ bhante anusocāmi,",
  "pv25:8.4_0": "bhattāraṁ sabbakāmadan”ti.",
  "pv25:9.1_0": "“Sabbe vāhesuṁ rājāno,",
  "pv25:9.2_0": "brahmadattassanāmakā;",
  "pv25:9.3_0": "Sabbeva cūḷanīputtā,",
  "pv25:9.4_0": "pañcālānaṁ rathesabhā.",
  "pv25:10.1_0": "Sabbesaṁ anupubbena,",
  "pv25:10.2_0": "mahesittamakārayi;",
  "pv25:10.3_0": "Kasmā purimake hitvā,",
  "pv25:10.4_0": "pacchimaṁ anusocasī”ti.",
  "pv25:11.1_0": "“Ātume itthibhūtāya,",
  "pv25:11.2_0": "dīgharattāya mārisa;",
  "pv25:11.3_0": "Yassā me itthibhūtāya,",
  "pv25:11.4_0": "saṁsāre bahubhāsasī”ti.",
  "pv25:12.1_0": "“Ahu itthī ahu puriso,",
  "pv25:12.2_0": "pasuyonimpi āgamā;",
  "pv25:12.3_0": "Evametaṁ atītānaṁ,",
  "pv25:12.4_0": "pariyanto na dissatī”ti.",
  "pv25:13.1_0": "“Ādittaṁ vata maṁ santaṁ,",
  "pv25:13.2_0": "ghatasittaṁva pāvakaṁ;",
  "pv25:13.3_0": "Vārinā viya osiñcaṁ,",
  "pv25:13.4_0": "sabbaṁ nibbāpaye daraṁ.",
  "pv25:14.1_0": "Abbahī vata me sallaṁ,",
  "pv25:14.2_0": "sokaṁ hadayanissitaṁ;",
  "pv25:14.3_0": "Yo me sokaparetāya,",
  "pv25:14.4_0": "patisokaṁ apānudi.",
  "pv25:15.1_0": "Sāhaṁ abbūḷhasallāsmi,",
  "pv25:15.2_0": "sītibhūtāsmi nibbutā;",
  "pv25:15.3_0": "Na socāmi na rodāmi,",
  "pv25:15.4_0": "tava sutvā mahāmunī”ti.",
  "pv25:16.1_0": "Tassa taṁ vacanaṁ sutvā,",
  "pv25:16.2_0": "samaṇassa subhāsitaṁ;",
  "pv25:16.3_0": "Pattacīvaramādāya,",
  "pv25:16.4_0": "pabbaji anagāriyaṁ.",
  "pv25:17.1_0": "Sā ca pabbajitā santā,",
  "pv25:17.2_0": "agārasmā anagāriyaṁ;",
  "pv25:17.3_0": "Mettacittaṁ abhāvesi,",
  "pv25:17.4_0": "brahmalokūpapattiyā.",
  "pv25:18.1_0": "Gāmā gāmaṁ vicarantī,",
  "pv25:18.2_0": "nigame rājadhāniyo;",
  "pv25:18.3_0": "Uruvelā nāma so gāmo,",
  "pv25:18.4_0": "yattha kālamakrubbatha.",
  "pv25:19.1_0": "Mettacittaṁ ābhāvetvā,",
  "pv25:19.2_0": "brahmalokūpapattiyā;",
  "pv25:19.3_0": "Itthicittaṁ virājetvā,",
  "pv25:19.4_0": "brahmalokūpagā ahūti.",
  "pv25:20.1_0": "Ubbaripetavatthu terasamaṁ.",
  "pv25:21.1_0": "Ubbarivaggo dutiyo.",
  "pv25:22.1_0": "Tassuddānaṁ",
  "pv25:23.1_0": "Mocakaṁ mātā mattā ca,",
  "pv25:23.2_0": "Nandā kuṇḍalīnā ghaṭo;",
  "pv25:23.3_0": "Dve seṭṭhī tunnavāyo ca,",
  "pv25:23.4_0": "Uttara suttakaṇṇa ubbarīti."
}