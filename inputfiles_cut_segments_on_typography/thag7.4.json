{
  "thag7.4:0.1_0": "Theragāthā 7.4",
  "thag7.4:0.2_0": "Sattakanipāta",
  "thag7.4:0.3_0": "Paṭhamavagga",
  "thag7.4:0.4_0": "Sopākattheragāthā",
  "thag7.4:1.1_0": "“Disvā pāsādachāyāyaṁ,",
  "thag7.4:1.2_0": "caṅkamantaṁ naruttamaṁ;",
  "thag7.4:1.3_0": "Tattha naṁ upasaṅkamma,",
  "thag7.4:1.4_0": "vandissaṁ purisuttamaṁ.",
  "thag7.4:2.1_0": "Ekaṁsaṁ cīvaraṁ katvā,",
  "thag7.4:2.2_0": "saṁharitvāna pāṇayo;",
  "thag7.4:2.3_0": "Anucaṅkamissaṁ virajaṁ,",
  "thag7.4:2.4_0": "sabbasattānamuttamaṁ.",
  "thag7.4:3.1_0": "Tato pañhe apucchi maṁ,",
  "thag7.4:3.2_0": "pañhānaṁ kovido vidū;",
  "thag7.4:3.3_0": "Acchambhī ca abhīto ca,",
  "thag7.4:3.4_0": "byākāsiṁ satthuno ahaṁ.",
  "thag7.4:4.1_0": "Vissajjitesu pañhesu,",
  "thag7.4:4.2_0": "anumodi tathāgato;",
  "thag7.4:4.3_0": "Bhikkhusaṅghaṁ viloketvā,",
  "thag7.4:4.4_0": "imamatthaṁ abhāsatha.",
  "thag7.4:5.1_0": "‘Lābhā aṅgānaṁ magadhānaṁ,",
  "thag7.4:5.2_0": "Yesāyaṁ paribhuñjati;",
  "thag7.4:5.3_0": "Cīvaraṁ piṇḍapātañca,",
  "thag7.4:5.4_0": "Paccayaṁ sayanāsanaṁ;",
  "thag7.4:5.5_0": "Paccuṭṭhānañca sāmīciṁ,",
  "thag7.4:5.6_0": "Tesaṁ lābhāti cābravi.",
  "thag7.4:6.1_0": "Ajjatagge maṁ sopāka,",
  "thag7.4:6.2_0": "dassanāyopasaṅkama;",
  "thag7.4:6.3_0": "Esā ceva te sopāka,",
  "thag7.4:6.4_0": "bhavatu upasampadā’.",
  "thag7.4:7.1_0": "Jātiyā sattavassohaṁ,",
  "thag7.4:7.2_0": "laddhāna upasampadaṁ;",
  "thag7.4:7.3_0": "Dhāremi antimaṁ dehaṁ,",
  "thag7.4:7.4_0": "aho dhammasudhammatā”ti.",
  "thag7.4:7.5_0": "… Sopāko thero …."
}