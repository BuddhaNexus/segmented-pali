{
  "tha-ap14:0.1_0": "Therāpadāna",
  "tha-ap14:0.2_0": "Sīhāsaniyavagga",
  "tha-ap14:0.3_0": "2. Ekatthambhikattheraapadāna",
  "tha-ap14:1.1_0": "“Siddhatthassa bhagavato,",
  "tha-ap14:1.2_0": "mahāpūgagaṇo ahu;",
  "tha-ap14:1.3_0": "Saraṇaṁ gatā ca te buddhaṁ,",
  "tha-ap14:1.4_0": "saddahanti tathāgataṁ.",
  "tha-ap14:2.1_0": "Sabbe saṅgamma mantetvā,",
  "tha-ap14:2.2_0": "māḷaṁ kubbanti satthuno;",
  "tha-ap14:2.3_0": "Ekatthambhaṁ alabhantā,",
  "tha-ap14:2.4_0": "vicinanti brahāvane.",
  "tha-ap14:3.1_0": "Tehaṁ araññe disvāna,",
  "tha-ap14:3.2_0": "upagamma gaṇaṁ tadā;",
  "tha-ap14:3.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap14:3.4_0": "paripucchiṁ gaṇaṁ ahaṁ.",
  "tha-ap14:4.1_0": "Te me puṭṭhā viyākaṁsu,",
  "tha-ap14:4.2_0": "sīlavanto upāsakā;",
  "tha-ap14:4.3_0": "Māḷaṁ mayaṁ kattukāmā,",
  "tha-ap14:4.4_0": "ekatthambho na labbhati.",
  "tha-ap14:5.1_0": "Ekatthambhaṁ mamaṁ detha,",
  "tha-ap14:5.2_0": "ahaṁ dassāmi satthuno;",
  "tha-ap14:5.3_0": "Āharissāmahaṁ thambhaṁ,",
  "tha-ap14:5.4_0": "appossukkā bhavantu te.",
  "tha-ap14:6.1_0": "Te me thambhaṁ pavecchiṁsu,",
  "tha-ap14:6.2_0": "pasannā tuṭṭhamānasā;",
  "tha-ap14:6.3_0": "Tato paṭinivattitvā,",
  "tha-ap14:6.4_0": "agamaṁsu sakaṁ gharaṁ.",
  "tha-ap14:7.1_0": "Aciraṁ gate pūgagaṇe,",
  "tha-ap14:7.2_0": "thambhaṁ ahāsahaṁ tadā;",
  "tha-ap14:7.3_0": "Haṭṭho haṭṭhena cittena,",
  "tha-ap14:7.4_0": "paṭhamaṁ ussapesahaṁ.",
  "tha-ap14:8.1_0": "Tena cittappasādena,",
  "tha-ap14:8.2_0": "Vimānaṁ upapajjahaṁ;",
  "tha-ap14:8.3_0": "Ubbiddhaṁ bhavanaṁ mayhaṁ,",
  "tha-ap14:8.4_0": "Sattabhūmaṁ samuggataṁ.",
  "tha-ap14:9.1_0": "Vajjamānāsu bherīsu,",
  "tha-ap14:9.2_0": "paricāremahaṁ sadā;",
  "tha-ap14:9.3_0": "Pañcapaññāsakappamhi,",
  "tha-ap14:9.4_0": "rājā āsiṁ yasodharo.",
  "tha-ap14:10.1_0": "Tatthāpi bhavanaṁ mayhaṁ,",
  "tha-ap14:10.2_0": "sattabhūmaṁ samuggataṁ;",
  "tha-ap14:10.3_0": "Kūṭāgāravarūpetaṁ,",
  "tha-ap14:10.4_0": "ekatthambhaṁ manoramaṁ.",
  "tha-ap14:11.1_0": "Ekavīsatikappamhi,",
  "tha-ap14:11.2_0": "udeno nāma khattiyo;",
  "tha-ap14:11.3_0": "Tatrāpi bhavanaṁ mayhaṁ,",
  "tha-ap14:11.4_0": "sattabhūmaṁ samuggataṁ.",
  "tha-ap14:12.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap14:12.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap14:12.3_0": "Anubhomi sukhaṁ sabbaṁ,",
  "tha-ap14:12.4_0": "ekatthambhassidaṁ phalaṁ.",
  "tha-ap14:13.1_0": "Catunnavutito kappe,",
  "tha-ap14:13.2_0": "yaṁ thambhamadadaṁ tadā;",
  "tha-ap14:13.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap14:13.4_0": "ekatthambhassidaṁ phalaṁ.",
  "tha-ap14:14.1_0": "Paṭisambhidā catasso,",
  "tha-ap14:14.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap14:14.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap14:14.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap14:15.1_0": "Itthaṁ sudaṁ āyasmā ekatthambhiko thero imā gāthāyo abhāsitthāti.",
  "tha-ap14:16.1_0": "Ekatthambhikattherassāpadānaṁ dutiyaṁ."
}