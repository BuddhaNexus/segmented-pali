{
  "snp4.4:0.1_0": "Sutta Nipāta 4.4",
  "snp4.4:0.2_0": "Suddhaṭṭhakasutta",
  "snp4.4:1.1_0": "Passāmi suddhaṁ paramaṁ arogaṁ,",
  "snp4.4:1.2_0": "Diṭṭhena saṁsuddhi narassa hoti;",
  "snp4.4:1.3_0": "Evābhijānaṁ paramanti ñatvā,",
  "snp4.4:1.4_0": "Suddhānupassīti pacceti ñāṇaṁ.",
  "snp4.4:2.1_0": "Diṭṭhena ce suddhi narassa hoti,",
  "snp4.4:2.2_0": "Ñāṇena vā so pajahāti dukkhaṁ;",
  "snp4.4:2.3_0": "Aññena so sujjhati sopadhīko,",
  "snp4.4:2.4_0": "Diṭṭhī hi naṁ pāva tathā vadānaṁ.",
  "snp4.4:3.1_0": "Na brāhmaṇo aññato suddhimāha,",
  "snp4.4:3.2_0": "Diṭṭhe sute sīlavate mute vā;",
  "snp4.4:3.3_0": "Puññe ca pāpe ca anūpalitto,",
  "snp4.4:3.4_0": "Attañjaho nayidha pakubbamāno.",
  "snp4.4:4.1_0": "Purimaṁ pahāya aparaṁ sitāse,",
  "snp4.4:4.2_0": "Ejānugā te na taranti saṅgaṁ;",
  "snp4.4:4.3_0": "Te uggahāyanti nirassajanti,",
  "snp4.4:4.4_0": "Kapīva sākhaṁ pamuñcaṁ gahāyaṁ.",
  "snp4.4:5.1_0": "Sayaṁ samādāya vatāni jantu,",
  "snp4.4:5.2_0": "Uccāvacaṁ gacchati saññasatto;",
  "snp4.4:5.3_0": "Vidvā ca vedehi samecca dhammaṁ,",
  "snp4.4:5.4_0": "Na uccāvacaṁ gacchati bhūripañño.",
  "snp4.4:6.1_0": "Sa sabbadhammesu visenibhūto,",
  "snp4.4:6.2_0": "Yaṁ kiñci diṭṭhaṁ va sutaṁ mutaṁ vā;",
  "snp4.4:6.3_0": "Tameva dassiṁ vivaṭaṁ carantaṁ,",
  "snp4.4:6.4_0": "Kenīdha lokasmi vikappayeyya.",
  "snp4.4:7.1_0": "Na kappayanti na purekkharonti,",
  "snp4.4:7.2_0": "Accantasuddhīti na te vadanti;",
  "snp4.4:7.3_0": "Ādānaganthaṁ gathitaṁ visajja,",
  "snp4.4:7.4_0": "Āsaṁ na kubbanti kuhiñci loke.",
  "snp4.4:8.1_0": "Sīmātigo brāhmaṇo tassa natthi,",
  "snp4.4:8.2_0": "Ñatvā va disvā va samuggahītaṁ;",
  "snp4.4:8.3_0": "Na rāgarāgī na virāgaratto,",
  "snp4.4:8.4_0": "Tassīdha natthi paramuggahītanti.",
  "snp4.4:8.5_0": "Suddhaṭṭhakasuttaṁ catutthaṁ."
}