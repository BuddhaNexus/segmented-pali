{
  "tha-ap45:0.1_0": "Therāpadāna",
  "tha-ap45:0.2_0": "Upālivagga",
  "tha-ap45:0.3_0": "3 Kāḷigodhāputtabhaddiyattheraapadāna",
  "tha-ap45:1.1_0": "“Padumuttarasambuddhaṁ,",
  "tha-ap45:1.2_0": "mettacittaṁ mahāmuniṁ;",
  "tha-ap45:1.3_0": "Upeti janatā sabbā,",
  "tha-ap45:1.4_0": "sabbalokagganāyakaṁ.",
  "tha-ap45:2.1_0": "Sattukañca baddhakañca,",
  "tha-ap45:2.2_0": "āmisaṁ pānabhojanaṁ;",
  "tha-ap45:2.3_0": "Dadanti satthuno sabbe,",
  "tha-ap45:2.4_0": "puññakkhette anuttare.",
  "tha-ap45:3.1_0": "Ahampi dānaṁ dassāmi,",
  "tha-ap45:3.2_0": "devadevassa tādino;",
  "tha-ap45:3.3_0": "Buddhaseṭṭhaṁ nimantetvā,",
  "tha-ap45:3.4_0": "saṅghampi ca anuttaraṁ.",
  "tha-ap45:4.1_0": "Uyyojitā mayā cete,",
  "tha-ap45:4.2_0": "nimantesuṁ tathāgataṁ;",
  "tha-ap45:4.3_0": "Kevalaṁ bhikkhusaṅghañca,",
  "tha-ap45:4.4_0": "puññakkhettaṁ anuttaraṁ.",
  "tha-ap45:5.1_0": "Satasahassapallaṅkaṁ,",
  "tha-ap45:5.2_0": "sovaṇṇaṁ gonakatthataṁ;",
  "tha-ap45:5.3_0": "Tūlikāpaṭalikāya,",
  "tha-ap45:5.4_0": "khomakappāsikehi ca;",
  "tha-ap45:5.5_0": "Mahārahaṁ paññāpayiṁ,",
  "tha-ap45:5.6_0": "āsanaṁ buddhayuttakaṁ.",
  "tha-ap45:6.1_0": "Padumuttaro lokavidū,",
  "tha-ap45:6.2_0": "devadevo narāsabho;",
  "tha-ap45:6.3_0": "Bhikkhusaṅghaparibyūḷho,",
  "tha-ap45:6.4_0": "mama dvāramupāgami.",
  "tha-ap45:7.1_0": "Paccuggantvāna sambuddhaṁ,",
  "tha-ap45:7.2_0": "lokanāthaṁ yasassinaṁ;",
  "tha-ap45:7.3_0": "Pasannacitto sumano,",
  "tha-ap45:7.4_0": "abhināmayiṁ saṅgharaṁ.",
  "tha-ap45:8.1_0": "Bhikkhūnaṁ satasahassaṁ,",
  "tha-ap45:8.2_0": "buddhañca lokanāyakaṁ;",
  "tha-ap45:8.3_0": "Pasannacitto sumano,",
  "tha-ap45:8.4_0": "paramannena tappayiṁ.",
  "tha-ap45:9.1_0": "Padumuttaro lokavidū,",
  "tha-ap45:9.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap45:9.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap45:9.4_0": "imā gāthā abhāsatha.",
  "tha-ap45:10.1_0": "‘Yenidaṁ āsanaṁ dinnaṁ,",
  "tha-ap45:10.2_0": "sovaṇṇaṁ gonakatthataṁ;",
  "tha-ap45:10.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap45:10.4_0": "suṇātha mama bhāsato.",
  "tha-ap45:11.1_0": "Catusattatikkhattuṁ so,",
  "tha-ap45:11.2_0": "devarajjaṁ karissati;",
  "tha-ap45:11.3_0": "Anubhossati sampattiṁ,",
  "tha-ap45:11.4_0": "accharāhi purakkhato.",
  "tha-ap45:12.1_0": "Padesarajjaṁ sahassaṁ,",
  "tha-ap45:12.2_0": "vasudhaṁ āvasissati;",
  "tha-ap45:12.3_0": "Ekapaññāsakkhattuñca,",
  "tha-ap45:12.4_0": "cakkavattī bhavissati.",
  "tha-ap45:13.1_0": "Sabbāsu bhavayonīsu,",
  "tha-ap45:13.2_0": "uccākulī bhavissati;",
  "tha-ap45:13.3_0": "So ca pacchā pabbajitvā,",
  "tha-ap45:13.4_0": "sukkamūlena codito;",
  "tha-ap45:13.5_0": "Bhaddiyo nāma nāmena,",
  "tha-ap45:13.6_0": "hessati satthu sāvako’.",
  "tha-ap45:14.1_0": "Vivekamanuyuttomhi,",
  "tha-ap45:14.2_0": "pantasenanivāsahaṁ;",
  "tha-ap45:14.3_0": "Phalañcādhigataṁ sabbaṁ,",
  "tha-ap45:14.4_0": "cattaklesomhi ajjahaṁ.",
  "tha-ap45:15.1_0": "Mama sabbaṁ abhiññāya,",
  "tha-ap45:15.2_0": "sabbaññū lokanāyako;",
  "tha-ap45:15.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap45:15.4_0": "etadagge ṭhapesi maṁ.",
  "tha-ap45:16.1_0": "Paṭisambhidā catasso,",
  "tha-ap45:16.2_0": "…pe…",
  "tha-ap45:16.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap45:17.1_0": "Itthaṁ sudaṁ āyasmā bhaddiyo kāḷigodhāya putto thero imā gāthāyo abhāsitthāti.",
  "tha-ap45:18.1_0": "Bhaddiyassa kāḷigodhāya puttattherassāpadānaṁ tatiyaṁ."
}