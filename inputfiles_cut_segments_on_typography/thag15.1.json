{
  "thag15.1:0.1_0": "Theragāthā 15.1",
  "thag15.1:0.2_0": "Soḷasakanipāta",
  "thag15.1:0.3_0": "Paṭhamavagga",
  "thag15.1:0.4_0": "Aññāsikoṇḍaññattheragāthā",
  "thag15.1:1.1_0": "“Esa bhiyyo pasīdāmi,",
  "thag15.1:1.2_0": "sutvā dhammaṁ mahārasaṁ;",
  "thag15.1:1.3_0": "Virāgo desito dhammo,",
  "thag15.1:1.4_0": "anupādāya sabbaso”.",
  "thag15.1:2.1_0": "“Bahūni loke citrāni,",
  "thag15.1:2.2_0": "asmiṁ pathavimaṇḍale;",
  "thag15.1:2.3_0": "Mathenti maññe saṅkappaṁ,",
  "thag15.1:2.4_0": "subhaṁ rāgūpasaṁhitaṁ.",
  "thag15.1:3.1_0": "Rajamuhatañca vātena,",
  "thag15.1:3.2_0": "yathā meghopasammaye;",
  "thag15.1:3.3_0": "Evaṁ sammanti saṅkappā,",
  "thag15.1:3.4_0": "yadā paññāya passati.",
  "thag15.1:4.1_0": "Sabbe saṅkhārā aniccāti,",
  "thag15.1:4.2_0": "yadā paññāya passati;",
  "thag15.1:4.3_0": "Atha nibbindati dukkhe,",
  "thag15.1:4.4_0": "esa maggo visuddhiyā.",
  "thag15.1:5.1_0": "Sabbe saṅkhārā dukkhāti,",
  "thag15.1:5.2_0": "yadā paññāya passati;",
  "thag15.1:5.3_0": "Atha nibbindati dukkhe,",
  "thag15.1:5.4_0": "esa maggo visuddhiyā.",
  "thag15.1:6.1_0": "Sabbe dhammā anattāti,",
  "thag15.1:6.2_0": "yadā paññāya passati;",
  "thag15.1:6.3_0": "Atha nibbindati dukkhe,",
  "thag15.1:6.4_0": "esa maggo visuddhiyā.",
  "thag15.1:7.1_0": "Buddhānubuddho yo thero,",
  "thag15.1:7.2_0": "koṇḍañño tibbanikkamo;",
  "thag15.1:7.3_0": "Pahīnajātimaraṇo,",
  "thag15.1:7.4_0": "brahmacariyassa kevalī.",
  "thag15.1:8.1_0": "Oghapāso daḷhakhilo,",
  "thag15.1:8.2_0": "Pabbato duppadālayo;",
  "thag15.1:8.3_0": "Chetvā khilañca pāsañca,",
  "thag15.1:8.4_0": "Selaṁ bhetvāna dubbhidaṁ;",
  "thag15.1:8.5_0": "Tiṇṇo pāraṅgato jhāyī,",
  "thag15.1:8.6_0": "Mutto so mārabandhanā.",
  "thag15.1:9.1_0": "Uddhato capalo bhikkhu,",
  "thag15.1:9.2_0": "mitte āgamma pāpake;",
  "thag15.1:9.3_0": "Saṁsīdati mahoghasmiṁ,",
  "thag15.1:9.4_0": "ūmiyā paṭikujjito.",
  "thag15.1:10.1_0": "Anuddhato acapalo,",
  "thag15.1:10.2_0": "nipako saṁvutindriyo;",
  "thag15.1:10.3_0": "Kalyāṇamitto medhāvī,",
  "thag15.1:10.4_0": "dukkhassantakaro siyā.",
  "thag15.1:11.1_0": "Kālapabbaṅgasaṅkāso,",
  "thag15.1:11.2_0": "kiso dhamanisanthato;",
  "thag15.1:11.3_0": "Mattaññū annapānasmiṁ,",
  "thag15.1:11.4_0": "adīnamanaso naro.",
  "thag15.1:12.1_0": "Phuṭṭho ḍaṁsehi makasehi,",
  "thag15.1:12.2_0": "araññasmiṁ brahāvane;",
  "thag15.1:12.3_0": "Nāgo saṅgāmasīseva,",
  "thag15.1:12.4_0": "sato tatrādhivāsaye.",
  "thag15.1:13.1_0": "Nābhinandāmi maraṇaṁ,",
  "thag15.1:13.2_0": "… pe",
  "thag15.1:13.4_0": "nibbisaṁ bhatako yathā.",
  "thag15.1:14.1_0": "Nābhinandāmi maraṇaṁ,",
  "thag15.1:14.2_0": "… pe",
  "thag15.1:14.4_0": "sampajāno patissato.",
  "thag15.1:15.1_0": "Pariciṇṇo mayā satthā,",
  "thag15.1:15.2_0": "… pe",
  "thag15.1:15.4_0": "bhavanetti samūhatā.",
  "thag15.1:16.1_0": "Yassa catthāya pabbajito,",
  "thag15.1:16.2_0": "agārasmānagāriyaṁ;",
  "thag15.1:16.3_0": "So me attho anuppatto,",
  "thag15.1:16.4_0": "kiṁ me saddhivihārinā”ti.",
  "thag15.1:16.5_0": "… Aññāsikoṇḍañño thero …."
}