{
  "tika-abh02t22:0_0": "5. Indriyavibhaṅgo",
  "tika-abh02t22:1_0": "1. Abhidhammabhājanīyavaṇṇanā",
  "tika-abh02t22:2_0": "219.Cakkhudvārabhāveti cakkhudvārabhāvahetu.",
  "tika-abh02t22:2_1": "Taṁdvārikehīti tasmiṁ dvāre pavattanakehi cittacetasikehi.",
  "tika-abh02t22:2_2": "Te hi “taṁ dvāraṁ pavattiokāsabhūtaṁ etesaṁ atthī”ti taṁdvārikā.",
  "tika-abh02t22:2_3": "Nanu ca tabbatthukehipi taṁ indaṭṭhaṁ kāreti.",
  "tika-abh02t22:2_4": "Tenāha aṭṭhakathāyaṁ “tikkhe tikkhattā,",
  "tika-abh02t22:2_5": "mande ca mandattā”ti?",
  "tika-abh02t22:2_6": "Saccaṁ kāreti,",
  "tika-abh02t22:2_7": "tabbatthukāpi pana idha “taṁdvārikā”icceva vuttā.",
  "tika-abh02t22:2_8": "Apariccattadvārabhāvaṁyeva hi cakkhu nissayaṭṭhena “vatthū”ti vuccati.",
  "tika-abh02t22:2_9": "Atha vā taṁdvārikesu tassa indaṭṭho pākaṭoti “taṁdvārikehī”ti vuttaṁ.",
  "tika-abh02t22:2_10": "Indaṭṭho parehi anuvattanīyatā paramissarabhāvoti dassento “tañhi…pe…",
  "tika-abh02t22:2_11": "anuvattantī”ti āha.",
  "tika-abh02t22:2_12": "Tattha tanti cakkhuṁ.",
  "tika-abh02t22:2_13": "Teti taṁdvārike.",
  "tika-abh02t22:2_14": "Kiriyāniṭṭhānavācī āvī-",
  "tika-abh02t22:2_15": "saddo “vijitāvī”tiādīsu viyāti āha “pariniṭṭhitakiccajānana”nti.",
  "tika-abh02t22:3_0": "“Cha imāni,",
  "tika-abh02t22:3_1": "bhikkhave,",
  "tika-abh02t22:3_2": "indriyāni.",
  "tika-abh02t22:3_3": "Katamāni cha?",
  "tika-abh02t22:3_4": "Cakkhundriyaṁ…pe…",
  "tika-abh02t22:3_5": "manindriya”nti evaṁ katthaci chapindriyāni āgatāni,",
  "tika-abh02t22:3_6": "kasmā pana suttante khandhādayo viya indriyāni ekajjhaṁ na vuttāni,",
  "tika-abh02t22:3_7": "abhidhamme ca vuttānīti āha “tattha suttante”tiādi.",
  "tika-abh02t22:3_8": "Nissaraṇūpāyādibhāvatoti ettha lokuttaresu maggapariyāpannāni nissaraṇaṁ,",
  "tika-abh02t22:3_9": "itarāni nissaraṇaphalaṁ,",
  "tika-abh02t22:3_10": "vivaṭṭasannissitena nibbattitāni saddhindriyādīni nissaraṇūpāyo,",
  "tika-abh02t22:3_11": "itaresu kānici pavattibhūtāni,",
  "tika-abh02t22:3_12": "kānici pavattiupāyoti veditabbāni.",
  "tika-abh02t22:4_0": "Khīṇāsavassa bhāvabhūtoti chaḷaṅgupekkhā viya khīṇāsavasseva dhammabhūto.",
  "tika-abh02t22:5_0": "Dveatthāti indaliṅgaindasiṭṭhaṭṭhā.",
  "tika-abh02t22:5_1": "Attano paccayavasenāti yathāsakaṁ kammādipaccayavasena.",
  "tika-abh02t22:5_2": "Taṁsahitasantāneti itthindriyasahite,",
  "tika-abh02t22:5_3": "purisindriyasahite ca santāne.",
  "tika-abh02t22:5_4": "Aññākārenāti itthiādito aññena ākārena.",
  "tika-abh02t22:5_5": "Anuvattanīyabhāvo itthipurisindriyānaṁ ādhipaccanti yojanā.",
  "tika-abh02t22:5_6": "Imasmiñcattheti ādhipaccatthe.",
  "tika-abh02t22:6_0": "Tesanti anaññātaññassāmītindriyādīnaṁ tiṇṇaṁ.",
  "tika-abh02t22:6_1": "Yā sukhadukkhindriyānaṁ iṭṭhāniṭṭhākārasambhogarasatā vuttā,",
  "tika-abh02t22:6_2": "sā ārammaṇasabhāveneva veditabbā,",
  "tika-abh02t22:6_3": "na ekaccasomanassindriyādīnaṁ viya parikappavasenāti dassento “ettha cā”tiādimāha.",
  "tika-abh02t22:7_0": "Yadipi purisindriyānantaraṁ jīvitindriyaṁ rūpakaṇḍepi desitaṁ,",
  "tika-abh02t22:7_1": "taṁ pana rūpajīvitindriyaṁ,",
  "tika-abh02t22:7_2": "na ca tattha manindriyaṁ vatvā itthipurisindriyāni vuttāni.",
  "tika-abh02t22:7_3": "Idha pana aṭṭhakathāyaṁ indriyānukkamo vutto sabbākārena yamakadesanāya saṁsandatīti dassento āha “so indriyayamakadesanāya sametī”ti.",
  "tika-abh02t22:7_4": "Purimapacchimānaṁ ajjhattikabāhirānanti cakkhādīnaṁ purimānaṁ ajjhattikānaṁ,",
  "tika-abh02t22:7_5": "itthindriyādīnaṁ pacchimānaṁ bāhirānaṁ.",
  "tika-abh02t22:7_6": "Tesaṁ majjhe vuttaṁ ubhayesaṁ upakārakatādīpanatthanti adhippāyo.",
  "tika-abh02t22:7_7": "Tena evampi desanantarānurodhena jīvitindriyassa anukkamaṁ vattuṁ vaṭṭatīti dasseti.",
  "tika-abh02t22:7_8": "Kāmañcettha evaṁ vuttaṁ,",
  "tika-abh02t22:7_9": "parato pana kiccavinicchaye idha pāḷiyaṁ āgataniyāmeneva manindriyānantaraṁ jīvitindriyassa,",
  "tika-abh02t22:7_10": "tadanantarañca itthipurisindriyānaṁ kiccavinicchayaṁ dassessati.",
  "tika-abh02t22:7_11": "Sabbaṁ taṁ dukkhaṁ saṅkhāradukkhabhāvena,",
  "tika-abh02t22:7_12": "yathārahaṁ vā dukkhadukkhatādibhāvena.",
  "tika-abh02t22:7_13": "Duvidhattabhāvānupālakassāti rūpārūpavasena duvidhassa attabhāvassa anupālakassa.",
  "tika-abh02t22:7_14": "Rūpārūpavasena duvidhampi hi jīvitindriyaṁ idha gahitaṁ.",
  "tika-abh02t22:7_15": "“Pavattī”ti etena sahajātadhammānaṁ pavattanarasena jīvitindriyena vedayitānaṁ pavattetabbataṁ dīpeti.",
  "tika-abh02t22:7_16": "“Bhāvanāmaggasampayutta”nti iminā phalabhūtaṁ aññindriyaṁ nivatteti.",
  "tika-abh02t22:7_17": "Bhāvanāgahaṇañcettha sakkā avattuṁ.",
  "tika-abh02t22:7_18": "“Bhāvetabbattā”ti vuttattā bhāvanābhāvo pākaṭova.",
  "tika-abh02t22:7_19": "Dassanānantarāti samānajātibhūmikena abyavahitataṁ sandhāyāha,",
  "tika-abh02t22:7_20": "na anantarapaccayaṁ.",
  "tika-abh02t22:8_0": "Tassāti indriyapaccayabhāvassa.",
  "tika-abh02t22:8_1": "Anaññasādhāraṇattāti aññehi anindriyehi asādhāraṇattā.",
  "tika-abh02t22:8_2": "Evaṁ sāmatthiyato kiccavisesaṁ vavatthapetvā pakaraṇatopi taṁ dasseti “indriyakathāya ca pavattattā”ti.",
  "tika-abh02t22:8_3": "Aññesanti aññesaṁ indriyasabhāvānampi sahajātadhammānaṁ.",
  "tika-abh02t22:8_4": "Yehi te indaṭṭhaṁ kārenti,",
  "tika-abh02t22:8_5": "tesaṁ vasavattāpanaṁ natthi,",
  "tika-abh02t22:8_6": "yathā manindriyassa pubbaṅgamasabhāvābhāvato sayañca te aññadatthu manindriyasseva vase vattanti.",
  "tika-abh02t22:8_7": "Tenāha “taṁsampayuttānipi hī”tiādi.",
  "tika-abh02t22:8_8": "Yadi evaṁ kathaṁ tesaṁ indaṭṭhoti?",
  "tika-abh02t22:8_9": "“Sukhanādilakkhaṇe sampayuttānaṁ attākārānuvidhāpanamatta”nti vuttovāyamattho.",
  "tika-abh02t22:8_10": "“Cetasikattā”ti iminā sampayuttadhammānaṁ cittassa padhānataṁ dasseti.",
  "tika-abh02t22:8_11": "Tato hi “cetasikā”ti vuccanti.",
  "tika-abh02t22:8_12": "Sabbatthāti vasavattāpanaṁ sahajātadhammānupālananti evaṁ yāva amatābhimukhabhāvapaccayatā ca sampayuttānanti taṁkiccaniddese.",
  "tika-abh02t22:8_13": "“Anuppādane,",
  "tika-abh02t22:8_14": "anupatthambhe ca satī”ti padaṁ āharitvā sambandhitabbaṁ.",
  "tika-abh02t22:8_15": "Na hi padattho sabbhāvaṁ byabhicaratīti janakupatthambhakattābhāvepīti vuttaṁ hoti.",
  "tika-abh02t22:8_16": "Tappaccayānanti itthipurisanimittādipaccayānaṁ kammādīnaṁ.",
  "tika-abh02t22:8_17": "Tappavattane nimittabhāvoti itthinimittādiākārarūpanibbattane kāraṇabhāvo.",
  "tika-abh02t22:8_18": "Svāyaṁ itthindriyādīnaṁ tattha atthibhāvoyevāti daṭṭhabbaṁ.",
  "tika-abh02t22:8_19": "Yasmiñhi sati yaṁ hoti,",
  "tika-abh02t22:8_20": "asati ca na hoti,",
  "tika-abh02t22:8_21": "taṁ tassa kāraṇanti.",
  "tika-abh02t22:8_22": "“Nimittabhāvo anuvidhāna”nti iminā anuvidhānasaddassa kammatthataṁ dasseti.",
  "tika-abh02t22:8_23": "Sukhadukkhabhāvappattā viyāti sayaṁ sukhadukkhasabhāvappattā viya,",
  "tika-abh02t22:8_24": "sukhantā dukkhantā ca viyāti attho.",
  "tika-abh02t22:8_25": "Asantassa…pe…",
  "tika-abh02t22:8_26": "majjhattākārānupāpanaṁ aññāṇupekkhanādivasena veditabbaṁ.",
  "tika-abh02t22:8_27": "Samānajātiyanti akusalehi sukhadukkhehi akusalūpekkhāya,",
  "tika-abh02t22:8_28": "abyākatehi abyākatūpekkhāya,",
  "tika-abh02t22:8_29": "kusalasukhato kusalūpekkhāya.",
  "tika-abh02t22:8_30": "Tatthāpi bhūmivibhāgenāyamattho bhinditvā yojetabbo.",
  "tika-abh02t22:8_31": "Taṁ sabbaṁ khandhavibhaṅge vuttaoḷārikasukhumavibhāgena dīpetabbaṁ.",
  "tika-abh02t22:8_32": "Ādisaddenāti “kāmarāgabyāpādādī”ti ettha vuttaādisaddena.",
  "tika-abh02t22:8_33": "Saṁyojanasamucchindanatadupanissayatā eva sandhāya aññātāvindriyassa kiccantarāpasutatā vuttā,",
  "tika-abh02t22:8_34": "tassāpi uddhambhāgiyasaṁyojanapaṭippassaddhippahānakiccatā labbhateva.",
  "tika-abh02t22:8_35": "Abyāpībhāvato vā aññātāvindriyassa paṭippassaddhippahānakiccaṁ na vattabbaṁ,",
  "tika-abh02t22:8_36": "tato aññindriyassāpi taṁ aṭṭhakathāyaṁ anuddhaṭaṁ.",
  "tika-abh02t22:8_37": "Maggānantarañhi phalaṁ “tāya saddhāya avūpasantāyā”tiādivacanato kilesānaṁ paṭippassambhanavasena pavattati,",
  "tika-abh02t22:8_38": "na itaraṁ.",
  "tika-abh02t22:8_39": "Aññathā ariyā sabbakālaṁ appaṭippassaddhakilesadarathā siyuṁ.",
  "tika-abh02t22:8_40": "Itarassa pana nicchandarāgesu sattavohāro viya ruḷhivasena paṭippassaddhikiccatā veditabbā.",
  "tika-abh02t22:9_0": "Etthāha –",
  "tika-abh02t22:9_1": "kasmā pana ettakāneva indriyāni vuttāni,",
  "tika-abh02t22:9_2": "etāni eva ca vuttānīti?",
  "tika-abh02t22:9_3": "Ādhipaccatthasambhavatoti ce.",
  "tika-abh02t22:9_4": "Ādhipaccaṁ nāma issariyanti vuttametaṁ.",
  "tika-abh02t22:9_5": "Tayidaṁ ādhipaccaṁ attano kicce balavanti aññesampi sabhāvadhammānaṁ labbhateva.",
  "tika-abh02t22:9_6": "Paccayādhīnavuttikā hi paccayuppannā.",
  "tika-abh02t22:9_7": "Tasmā te tehi anuvattīyanti,",
  "tika-abh02t22:9_8": "te ca te anuvattantīti?",
  "tika-abh02t22:9_9": "Saccametaṁ,",
  "tika-abh02t22:9_10": "tathāpi atthi tesaṁ viseso.",
  "tika-abh02t22:9_11": "Svāyaṁ viseso “cakkhuviññāṇādippavattiyañhi cakkhādīnaṁ siddhamādhipacca”ntiādinā aṭṭhakathāyaṁ dassitoyeva.",
  "tika-abh02t22:10_0": "Apica khandhapañcake yāyaṁ sattapaññatti,",
  "tika-abh02t22:10_1": "tassā visesanissayo cha ajjhattikāni āyatanānīti tāni tāva ādhipaccatthaṁ upādāya “cakkhundriyaṁ…pe…",
  "tika-abh02t22:10_2": "manindriya”ntiādito vuttāni.",
  "tika-abh02t22:10_3": "Tāni pana yena dhammena pavattanti,",
  "tika-abh02t22:10_4": "ayaṁ so dhammo tesaṁ ṭhitihetūti dassanatthaṁ jīvitaṁ.",
  "tika-abh02t22:10_5": "Tayime indriyapaṭibaddhā dhammā imesaṁ vasena “itthī,",
  "tika-abh02t22:10_6": "puriso”ti voharīyantīti dassanatthaṁ bhāvadvayaṁ.",
  "tika-abh02t22:10_7": "Svāyaṁ sattasaññito dhammapuñjo pabandhavasena pavattamāno imāhi vedanāhi saṁkilissatīti dassanatthaṁ vedanāpañcakaṁ.",
  "tika-abh02t22:10_8": "Tato visuddhatthikānaṁ vodānasambhāradassanatthaṁ saddhādipañcakaṁ.",
  "tika-abh02t22:10_9": "Tato vodānasambhārā imehi visujjhanti,",
  "tika-abh02t22:10_10": "visuddhippattā,",
  "tika-abh02t22:10_11": "niṭṭhitakiccā ca hontīti dassanatthaṁ ante anaññātaññassāmītindriyādīni tīṇi vuttāni.",
  "tika-abh02t22:10_12": "Sabbattha “ādhipaccatthaṁ upādāyā”ti padaṁ yojetabbaṁ.",
  "tika-abh02t22:10_13": "Ettāvatā adhippetatthasiddhīti aññesaṁ aggahaṇaṁ.",
  "tika-abh02t22:11_0": "Atha vā pavattinivattīnaṁ nissayādidassanatthampi etāni eva vuttāni.",
  "tika-abh02t22:11_1": "Pavattiyā hi visesato mūlanissayabhūtāni cha ajjhattikāni āyatanāni.",
  "tika-abh02t22:11_2": "Yathāha “chasu loko samuppanno”tiādi.",
  "tika-abh02t22:11_3": "Tassā uppatti itthipurisindriyehi.",
  "tika-abh02t22:11_4": "Visabhāgavatthusarāganimittā hi yebhuyyena sattakāyassa abhinibbatti.",
  "tika-abh02t22:11_5": "Vuttañhetaṁ “tiṇṇaṁ kho pana, mahārāja,",
  "tika-abh02t22:11_6": "sannipātā gabbhassāvakkanti hoti,",
  "tika-abh02t22:11_7": "idha mātāpitaro ca sannipatitā honti,",
  "tika-abh02t22:11_8": "mātā ca utunī hoti,",
  "tika-abh02t22:11_9": "gabbho ca paccupaṭṭhito hotī”ti.",
  "tika-abh02t22:11_10": "Avaṭṭhānaṁ jīvitindriyena tena anupāletabbato.",
  "tika-abh02t22:11_11": "Tenāha “āyu ṭhiti yapanā yāpanā”tiādi.",
  "tika-abh02t22:11_12": "Upabhogo vedanāhi.",
  "tika-abh02t22:11_13": "Vedanāvasena hi iṭṭhādisabbavisayupabhogo. Yathāha –",
  "tika-abh02t22:11_14": "“vedayati vedayatīti kho,",
  "tika-abh02t22:11_15": "bhikkhave,",
  "tika-abh02t22:11_16": "tasmā vedanāti vuccatī”ti.",
  "tika-abh02t22:11_17": "Evaṁ pavattiyā nissayasamuppādaṭṭhitisambhogadassanatthaṁ cakkhundriyaṁ yāva upekkhindriyanti cuddasindriyāni desitāni.",
  "tika-abh02t22:11_18": "Yathā cetāni pavattiyā,",
  "tika-abh02t22:11_19": "evaṁ itarāni nivattiyā.",
  "tika-abh02t22:11_20": "Vivaṭṭasannissitena hi nibbattitāni saddhādīni pañca indriyāni nivattiyā nissayo.",
  "tika-abh02t22:11_21": "Uppādo anaññātaññassāmītindriyena tassa paṭhamaṁ uppajjanato.",
  "tika-abh02t22:11_22": "Avaṭṭhānaṁ aññindriyena.",
  "tika-abh02t22:11_23": "Upabhogo aññātāvindriyena aggaphalasamupabhogato.",
  "tika-abh02t22:11_24": "Evampi etāni eva indriyāni desitāni.",
  "tika-abh02t22:11_25": "Ettāvatā yathādhippetatthasiddhito aññesaṁ aggahaṇaṁ.",
  "tika-abh02t22:11_26": "Etenāpi nesaṁ desanānukkamopi saṁvaṇṇito veditabbo.",
  "tika-abh02t22:12_0": "220.Kusalākusalavīriyādīnīti ettha ādi-",
  "tika-abh02t22:12_1": "saddena kusalasamādhiādīnaṁ,",
  "tika-abh02t22:12_2": "abyākatavīriyādīnañca saṅgaho daṭṭhabbo.",
  "tika-abh02t22:12_3": "Paccayādīti ādi-",
  "tika-abh02t22:12_4": "saddena desārammaṇādayo gahitā,",
  "tika-abh02t22:12_5": "yathāvuttavīriyādīni,",
  "tika-abh02t22:12_6": "cakkhādīni ca saṅgaṇhāti.",
  "tika-abh02t22:12_7": "Iccevaṁ sabbasaṅgāhikāni vīriyindriyādipadāni,",
  "tika-abh02t22:12_8": "cakkhundriyādipadāni ca.",
  "tika-abh02t22:12_9": "Tenāti “evaṁ santepī”tiādinā bhūmivibhāgakathanena.",
  "tika-abh02t22:12_10": "Tannivattanenāti sabbesaṁ sabbabhūmikattanivattanena.",
  "tika-abh02t22:12_11": "Avijjamānasaṅgāhakattanti tassaṁ tassaṁ bhūmiyaṁ anupalabbhamānassa indriyassa saṅgāhakatā.",
  "tika-abh02t22:13_0": "Abhidhammabhājanīyavaṇṇanā niṭṭhitā.",
  "tika-abh02t22:14_0": "2. Pañhapucchakavaṇṇanā",
  "tika-abh02t22:15_0": "Idha imasmiṁ “sattindriyā anārammaṇā”ti evaṁ ekantānārammaṇatte vuccamāne na ābhaṭṭhaṁ jīvitindriyaṁ na bhāsitaṁ.",
  "tika-abh02t22:15_1": "Ṭīkāyaṁ pana anābhaṭṭhanti katasamāsaṁ katvā vuttaṁ.",
  "tika-abh02t22:15_2": "Rūpadhammesu saṅgahitatanti “rūpa”nti gaṇitataṁ.",
  "tika-abh02t22:15_3": "Arūpakoṭṭhāsena arūpabhāvena siyāpakkhe saṅgahitaṁ. Kasmā?",
  "tika-abh02t22:15_4": "Tassa parittārammaṇāditā atthīti.",
  "tika-abh02t22:15_5": "Yasmā pana rūpārūpamissakasseva vasena siyāpakkhasaṅgaho yutto,",
  "tika-abh02t22:15_6": "na ekadesassa,",
  "tika-abh02t22:15_7": "tasmā ekadesassa taṁ anicchanto āha “adhippāyo”ti.",
  "tika-abh02t22:15_8": "Idāni tamatthaṁ pakāsetuṁ “arūpakoṭṭhāsena panā”tiādi vuttaṁ.",
  "tika-abh02t22:15_9": "Navattabbatāti parittārammaṇādibhāvena navattabbatā.",
  "tika-abh02t22:15_10": "Kathaṁ pana rūpakoṭṭhāsenassānārammaṇassa navattabbatāti codanaṁ sandhāyāha “na hi anārammaṇa”ntiādi.",
  "tika-abh02t22:15_11": "“Avijjamānārammaṇānārammaṇesū”ti iminā “anārammaṇā”ti bāhiratthasamāso ayanti dasseti.",
  "tika-abh02t22:15_12": "Navattabbesūti sārammaṇabhāvena navattabbesu.",
  "tika-abh02t22:15_13": "Anārammaṇattāti ārammaṇarahitattā.",
  "tika-abh02t22:15_14": "“Navindriyā siyā parittārammaṇā,",
  "tika-abh02t22:15_15": "siyā mahaggatārammaṇā,",
  "tika-abh02t22:15_16": "siyā appamāṇārammaṇā,",
  "tika-abh02t22:15_17": "siyā na vattabbā ‘parittārammaṇā’tipi ‘mahaggatārammaṇā’tipi ‘appamāṇārammaṇā’tipī”tiādīsu viya na sārammaṇasseva navattabbataṁ dasseti.",
  "tika-abh02t22:15_18": "Yathā ca na sārammaṇasseva navattabbatāpariyāyo,",
  "tika-abh02t22:15_19": "atha kho anārammaṇassāpīti sārammaṇe niyamābhāvo.",
  "tika-abh02t22:15_20": "Evaṁ navattabbaṁ sārammaṇamevāti ayampi niyamo natthīti dassento “navattabbassa vā sārammaṇata”nti āha.",
  "tika-abh02t22:15_21": "Tassa na dassetīti sambandho.",
  "tika-abh02t22:15_22": "“Na hī”tiādinā tamevatthaṁ vivarati.",
  "tika-abh02t22:16_0": "Tattha rūpanibbānānaṁ sukhādisampayuttabhāvena navattabbatā,",
  "tika-abh02t22:16_1": "na parittārammaṇādibhāvenāti codanaṁ manasi katvā āha “athāpī”tiādi.",
  "tika-abh02t22:16_2": "Tattha athāpi vattatīti sambandho.",
  "tika-abh02t22:16_3": "Siyā anārammaṇantipi vattabbaṁ siyāti anārammaṇaṁ dhammāyatanaṁ sārammaṇehi visuṁ katvā evaṁ vattabbaṁ siyā.",
  "tika-abh02t22:16_4": "Navattabba-",
  "tika-abh02t22:16_5": "saddo yadi sārammaṇesveva vatteyya,",
  "tika-abh02t22:16_6": "na cevaṁ vuttaṁ,",
  "tika-abh02t22:16_7": "avacane ca aññaṁ kāraṇaṁ natthīti dassento āha “na hi pañhapucchake sāvasesā desanā atthī”ti.",
  "tika-abh02t22:16_8": "Tasmā navattabba-",
  "tika-abh02t22:16_9": "saddo anārammaṇesupi vattatevāti adhippāyo.",
  "tika-abh02t22:16_10": "Yāpi “aṭṭhindriyā siyā ajjhattārammaṇā”ti ajjhattārammaṇādibhāvena navattabbatā vuttā,",
  "tika-abh02t22:16_11": "sā jīvitindriyassa ākiñcaññāyatanakāle paṭhamāruppaviññāṇābhāvamattārammaṇataṁ sandhāya vuttā,",
  "tika-abh02t22:16_12": "na sārammaṇasseva navattabbatādassanatthaṁ,",
  "tika-abh02t22:16_13": "nāpi anārammaṇassa parittārammaṇādibhāvena navattabbatābhāvadassanatthanti dassento “aṭṭhindriyā siyā ajjhattārammaṇāti ettha cā”tiādimāha.",
  "tika-abh02t22:16_14": "Tattha siyā ajjhattārammaṇātīti iti-",
  "tika-abh02t22:16_15": "saddo ādiattho.",
  "tika-abh02t22:16_16": "Tena avasiṭṭhapāḷisaṅgaṇhanena “siyā na vattabbā ‘ajjhattārammaṇā’tipi ‘bahiddhārammaṇā’tipi ‘ajjhattabahiddhārammaṇā’tipī”ti",
  "tika-abh02t22:16_17": "imāya pāḷiyā vuttamatthaṁ jīvitindriyassa dassento “jīvitindriyassa…pe…",
  "tika-abh02t22:16_18": "navattabbatā veditabbā”ti āha,",
  "tika-abh02t22:16_19": "taṁ vuttatthameva.",
  "tika-abh02t22:17_0": "Pañhapucchakavaṇṇanā niṭṭhitā.",
  "tika-abh02t22:18_0": "Indriyavibhaṅgavaṇṇanā niṭṭhitā."
}