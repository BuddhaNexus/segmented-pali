{
  "tha-ap118:0.1_0": "Therāpadāna",
  "tha-ap118:0.2_0": "Mahāparivāravagga",
  "tha-ap118:0.3_0": "6. Citakapūjakattheraapadāna",
  "tha-ap118:1.1_0": "“Vasāmi rājāyatane,",
  "tha-ap118:1.2_0": "sāmacco saparijjano;",
  "tha-ap118:1.3_0": "Parinibbute bhagavati,",
  "tha-ap118:1.4_0": "sikhino lokabandhuno.",
  "tha-ap118:2.1_0": "Pasannacitto sumano,",
  "tha-ap118:2.2_0": "citakaṁ agamāsahaṁ;",
  "tha-ap118:2.3_0": "Tūriyaṁ tattha vādetvā,",
  "tha-ap118:2.4_0": "gandhamālaṁ samokiriṁ.",
  "tha-ap118:3.1_0": "Citamhi pūjaṁ katvāna,",
  "tha-ap118:3.2_0": "vanditvā citakaṁ ahaṁ;",
  "tha-ap118:3.3_0": "Pasannacitto sumano,",
  "tha-ap118:3.4_0": "sakaṁ bhavanupāgamiṁ.",
  "tha-ap118:4.1_0": "Bhavane upaviṭṭhohaṁ,",
  "tha-ap118:4.2_0": "citapūjaṁ anussariṁ;",
  "tha-ap118:4.3_0": "Tena kammena dvipadinda,",
  "tha-ap118:4.4_0": "lokajeṭṭha narāsabha.",
  "tha-ap118:5.1_0": "Anubhotvāna sampattiṁ,",
  "tha-ap118:5.2_0": "devesu mānusesu ca;",
  "tha-ap118:5.3_0": "Pattomhi acalaṁ ṭhānaṁ,",
  "tha-ap118:5.4_0": "hitvā jayaparājayaṁ.",
  "tha-ap118:6.1_0": "Ekattiṁse ito kappe,",
  "tha-ap118:6.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap118:6.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap118:6.4_0": "citapūjāyidaṁ phalaṁ.",
  "tha-ap118:7.1_0": "Ekūnatiṁsakappamhi,",
  "tha-ap118:7.2_0": "ito soḷasa rājāno;",
  "tha-ap118:7.3_0": "Uggatā nāma nāmena,",
  "tha-ap118:7.4_0": "cakkavattī mahabbalā.",
  "tha-ap118:8.1_0": "Paṭisambhidā catasso,",
  "tha-ap118:8.2_0": "…pe…",
  "tha-ap118:8.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap118:9.1_0": "Itthaṁ sudaṁ āyasmā citakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap118:10.1_0": "Citakapūjakattherassāpadānaṁ chaṭṭhaṁ."
}