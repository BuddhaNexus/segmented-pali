{
  "cp16:0.1_0": "Cariyāpiṭaka",
  "cp16:0.2_0": "Hatthināgavagga",
  "cp16:0.3_0": "Sīlapāramī 6",
  "cp16:0.4_0": "Rurumigarājacariya",
  "cp16:1.1_0": "“Punāparaṁ yadā homi,",
  "cp16:1.2_0": "sutattakanakasannibho;",
  "cp16:1.3_0": "Migarājā ruru nāma,",
  "cp16:1.4_0": "paramasīlasamāhito.",
  "cp16:2.1_0": "Ramme padese ramaṇīye,",
  "cp16:2.2_0": "vivitte amanussake;",
  "cp16:2.3_0": "Tattha vāsaṁ upagañchiṁ,",
  "cp16:2.4_0": "gaṅgākūle manorame.",
  "cp16:3.1_0": "Atha upari gaṅgāya,",
  "cp16:3.2_0": "dhanikehi paripīḷito;",
  "cp16:3.3_0": "Puriso gaṅgāya papati,",
  "cp16:3.4_0": "‘jīvāmi vā marāmi vā’.",
  "cp16:4.1_0": "Rattindivaṁ so gaṅgāya,",
  "cp16:4.2_0": "vuyhamāno mahodake;",
  "cp16:4.3_0": "Ravanto karuṇaṁ ravaṁ,",
  "cp16:4.4_0": "majjhe gaṅgāya gacchati.",
  "cp16:5.1_0": "Tassāhaṁ saddaṁ sutvāna,",
  "cp16:5.2_0": "karuṇaṁ paridevato;",
  "cp16:5.3_0": "Gaṅgāya tīre ṭhatvāna,",
  "cp16:5.4_0": "apucchiṁ ‘kosi tvaṁ naro’.",
  "cp16:6.1_0": "So me puṭṭho ca byākāsi,",
  "cp16:6.2_0": "attano karaṇaṁ tadā;",
  "cp16:6.3_0": "‘Dhanikehi bhīto tasito,",
  "cp16:6.4_0": "pakkhandohaṁ mahānadiṁ’.",
  "cp16:7.1_0": "Tassa katvāna kāruññaṁ,",
  "cp16:7.2_0": "cajitvā mama jīvitaṁ;",
  "cp16:7.3_0": "Pavisitvā nīhariṁ tassa,",
  "cp16:7.4_0": "andhakāramhi rattiyā.",
  "cp16:8.1_0": "Assatthakālamaññāya,",
  "cp16:8.2_0": "tassāhaṁ idamabraviṁ;",
  "cp16:8.3_0": "‘Ekaṁ taṁ varaṁ yācāmi,",
  "cp16:8.4_0": "mā maṁ kassaci pāvada’.",
  "cp16:9.1_0": "Nagaraṁ gantvāna ācikkhi,",
  "cp16:9.2_0": "pucchito dhanahetuko;",
  "cp16:9.3_0": "Rājānaṁ so gahetvāna,",
  "cp16:9.4_0": "upagañchi mamantikaṁ.",
  "cp16:10.1_0": "Yāvatā karaṇaṁ sabbaṁ,",
  "cp16:10.2_0": "rañño ārocitaṁ mayā;",
  "cp16:10.3_0": "Rājā sutvāna vacanaṁ,",
  "cp16:10.4_0": "usuṁ tassa pakappayi;",
  "cp16:10.5_0": "‘Idheva ghātayissāmi,",
  "cp16:10.6_0": "mittadubbhiṁ anāriyaṁ’.",
  "cp16:11.1_0": "Tamahaṁ anurakkhanto,",
  "cp16:11.2_0": "nimminiṁ mama attanā;",
  "cp16:11.3_0": "‘Tiṭṭhateso mahārāja,",
  "cp16:11.4_0": "kāmakāro bhavāmi te’.",
  "cp16:12.1_0": "Anurakkhiṁ mama sīlaṁ,",
  "cp16:12.2_0": "nārakkhiṁ mama jīvitaṁ;",
  "cp16:12.3_0": "Sīlavā hi tadā āsiṁ,",
  "cp16:12.4_0": "bodhiyāyeva kāraṇā”ti.",
  "cp16:13.1_0": "Rurumigarājacariyaṁ chaṭṭhaṁ."
}