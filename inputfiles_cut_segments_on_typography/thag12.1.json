{
  "thag12.1:0.1_0": "Theragāthā 12.1",
  "thag12.1:0.2_0": "Dvādasakanipāta",
  "thag12.1:0.3_0": "Paṭhamavagga",
  "thag12.1:0.4_0": "Sīlavattheragāthā",
  "thag12.1:1.1_0": "“Sīlamevidha sikkhetha,",
  "thag12.1:1.2_0": "asmiṁ loke susikkhitaṁ;",
  "thag12.1:1.3_0": "Sīlañhi sabbasampattiṁ,",
  "thag12.1:1.4_0": "upanāmeti sevitaṁ.",
  "thag12.1:2.1_0": "Sīlaṁ rakkheyya medhāvī,",
  "thag12.1:2.2_0": "patthayāno tayo sukhe;",
  "thag12.1:2.3_0": "Pasaṁsaṁ vittilābhañca,",
  "thag12.1:2.4_0": "pecca sagge pamodanaṁ.",
  "thag12.1:3.1_0": "Sīlavā hi bahū mitte,",
  "thag12.1:3.2_0": "saññamenādhigacchati;",
  "thag12.1:3.3_0": "Dussīlo pana mittehi,",
  "thag12.1:3.4_0": "dhaṁsate pāpamācaraṁ.",
  "thag12.1:4.1_0": "Avaṇṇañca akittiñca,",
  "thag12.1:4.2_0": "dussīlo labhate naro;",
  "thag12.1:4.3_0": "Vaṇṇaṁ kittiṁ pasaṁsañca,",
  "thag12.1:4.4_0": "sadā labhati sīlavā.",
  "thag12.1:5.1_0": "Ādi sīlaṁ patiṭṭhā ca,",
  "thag12.1:5.2_0": "kalyāṇānañca mātukaṁ;",
  "thag12.1:5.3_0": "Pamukhaṁ sabbadhammānaṁ,",
  "thag12.1:5.4_0": "tasmā sīlaṁ visodhaye.",
  "thag12.1:6.1_0": "Velā ca saṁvaraṁ sīlaṁ,",
  "thag12.1:6.2_0": "cittassa abhihāsanaṁ;",
  "thag12.1:6.3_0": "Titthañca sabbabuddhānaṁ,",
  "thag12.1:6.4_0": "tasmā sīlaṁ visodhaye.",
  "thag12.1:7.1_0": "Sīlaṁ balaṁ appaṭimaṁ,",
  "thag12.1:7.2_0": "sīlaṁ āvudhamuttamaṁ;",
  "thag12.1:7.3_0": "Sīlamābharaṇaṁ seṭṭhaṁ,",
  "thag12.1:7.4_0": "sīlaṁ kavacamabbhutaṁ.",
  "thag12.1:8.1_0": "Sīlaṁ setu mahesakkho,",
  "thag12.1:8.2_0": "sīlaṁ gandho anuttaro;",
  "thag12.1:8.3_0": "Sīlaṁ vilepanaṁ seṭṭhaṁ,",
  "thag12.1:8.4_0": "yena vāti disodisaṁ.",
  "thag12.1:9.1_0": "Sīlaṁ sambalamevaggaṁ,",
  "thag12.1:9.2_0": "sīlaṁ pātheyyamuttamaṁ;",
  "thag12.1:9.3_0": "Sīlaṁ seṭṭho ativāho,",
  "thag12.1:9.4_0": "yena yāti disodisaṁ.",
  "thag12.1:10.1_0": "Idheva nindaṁ labhati,",
  "thag12.1:10.2_0": "peccāpāye ca dummano;",
  "thag12.1:10.3_0": "Sabbattha dummano bālo,",
  "thag12.1:10.4_0": "sīlesu asamāhito.",
  "thag12.1:11.1_0": "Idheva kittiṁ labhati,",
  "thag12.1:11.2_0": "pecca sagge ca summano;",
  "thag12.1:11.3_0": "Sabbattha sumano dhīro,",
  "thag12.1:11.4_0": "sīlesu susamāhito.",
  "thag12.1:12.1_0": "Sīlameva idha aggaṁ,",
  "thag12.1:12.2_0": "paññavā pana uttamo;",
  "thag12.1:12.3_0": "Manussesu ca devesu,",
  "thag12.1:12.4_0": "sīlapaññāṇato jayan”ti.",
  "thag12.1:12.5_0": "… Sīlavo thero …."
}