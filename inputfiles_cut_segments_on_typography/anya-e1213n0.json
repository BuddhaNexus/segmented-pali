{
  "anya-e1213n0:0_0": "Saddabindu pakaraṇaṃ",
  "anya-e1213n0:1_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1213n0:2_0": "1.",
  "anya-e1213n0:3_0": "Yassañeyyesu dhammesu, nāṇumattampaveditaṃ,",
  "anya-e1213n0:4_0": "Natvāsaddhammasaṅghaṃtaṃ, saddabinduṃsamārabhe;",
  "anya-e1213n0:5_0": "2.",
  "anya-e1213n0:6_0": "Kādiritā navasaṅkhyā, kamenaṭā di yādica,",
  "anya-e1213n0:7_0": "Pādayopañca saṅkhyātā, suññanāmā saraññanā;",
  "anya-e1213n0:8_0": "3.",
  "anya-e1213n0:9_0": "Sarehevasarāpubbe luttāvāvīpareramā,",
  "anya-e1213n0:10_0": "Byañjanācāgamāvāvī dīgharassādisambhavā;",
  "anya-e1213n0:11_0": "4.",
  "anya-e1213n0:12_0": "Kākāsenāgatosisa keniddhimaccadassayi,",
  "anya-e1213n0:13_0": "Arājakhvaggimesīnaṃ sotukammeghayitthiyo;",
  "anya-e1213n0:14_0": "Iti sandhikappo samatto.",
  "anya-e1213n0:15_0": "5.",
  "anya-e1213n0:16_0": "Buddhapumayuvasanta rājabrahmasakhācasā,",
  "anya-e1213n0:17_0": "Yatādidehījantuca satthupitābhibhūvidū;",
  "anya-e1213n0:18_0": "6.",
  "anya-e1213n0:19_0": "Kaññāmmārattithipo, kkharaṇīnadirumātubhū,",
  "anya-e1213n0:20_0": "Napuṃsaketiyantāca, padakammadadhāyuno;",
  "anya-e1213n0:21_0": "7.",
  "anya-e1213n0:22_0": "Gahitāgahaṇenettha suddhosyādyantakāpume,",
  "anya-e1213n0:23_0": "Vimalāhontijāntehi thyaṃpañcantehidādhikā;",
  "anya-e1213n0:24_0": "8.",
  "anya-e1213n0:25_0": "Napuṃsakepayogātu janakāhontityantato,",
  "anya-e1213n0:26_0": "Padhānānugatāsabba nāmasamāsataddhitā;",
  "anya-e1213n0:27_0": "9.",
  "anya-e1213n0:28_0": "Attiliṅgānipātādi tatoluttāvasyādayo,",
  "anya-e1213n0:29_0": "Suttānurūpatosiddhā hontivattāmanādayo;",
  "anya-e1213n0:30_0": "Iti nāmakappo samatto.",
  "anya-e1213n0:31_0": "10.",
  "anya-e1213n0:32_0": "Chakārakesasāmismiṃ samāsohotisambhavā,",
  "anya-e1213n0:33_0": "Taddhītākattukammasa, mpadānokāsasāmisu;",
  "anya-e1213n0:34_0": "11.",
  "anya-e1213n0:35_0": "Sādhattayamhiākhyāto kitakosattasādhane,",
  "anya-e1213n0:36_0": "Sabbatthapaṭhamāvutte avuttedutiyādayo;",
  "anya-e1213n0:37_0": "12.",
  "anya-e1213n0:38_0": "Manasāmuninovutyā vanebuddhenavaṇṇite,",
  "anya-e1213n0:39_0": "Vaṭṭāhitovivaṭṭatthaṃ bhikkhubhāvetibhāvanaṃ;",
  "anya-e1213n0:40_0": "Iti kārakakappo samatto.",
  "anya-e1213n0:41_0": "13.",
  "anya-e1213n0:42_0": "Rāsīdvipadikādvandā liṅgenavacanenaca,",
  "anya-e1213n0:43_0": "Luttātulyādhikaraṇā bahubbīhītukhemarū;",
  "anya-e1213n0:44_0": "14.",
  "anya-e1213n0:45_0": "Tappurisācakhemorā dayācakammadhārayā,",
  "anya-e1213n0:46_0": "Digavocāvyayāhārā etesabbepihāritā;",
  "anya-e1213n0:47_0": "Iti samāsakappo samatto.",
  "anya-e1213n0:48_0": "15.",
  "anya-e1213n0:49_0": "Kaccāditopiekamhā saddatoniyamaṃvinā,",
  "anya-e1213n0:50_0": "Nekatthesatibhonteva sabbetaddhitapaccayā;",
  "anya-e1213n0:51_0": "Iti taddhitakappo samatto.",
  "anya-e1213n0:52_0": "16.",
  "anya-e1213n0:53_0": "Kattarināññathākamme tathābhāvetumerayā,",
  "anya-e1213n0:54_0": "Sabbetepacadhātumhi saṅkhepenamarūmayā;",
  "anya-e1213n0:55_0": "17.",
  "anya-e1213n0:56_0": "Gamīmhātiguṇāphatto sambhavāaññadhātusu,",
  "anya-e1213n0:57_0": "Anantāvapayogāte ādesapaccayādihi;",
  "anya-e1213n0:58_0": "Iti ākhyātakappo samatto.",
  "anya-e1213n0:59_0": "18.",
  "anya-e1213n0:60_0": "Kitādipaccayāsabbe, ekamhāapidhātuto,",
  "anya-e1213n0:61_0": "Siyuṃnurūpatosatta, sādhanesatipāyato;",
  "anya-e1213n0:62_0": "Iti kitakappo samatto.",
  "anya-e1213n0:63_0": "19.",
  "anya-e1213n0:64_0": "Iminākiñcilesena, sakkāñātuṃjināgame,",
  "anya-e1213n0:65_0": "Payogāñāṇināsindhu, rasovekenabindunā;",
  "anya-e1213n0:66_0": "20.",
  "anya-e1213n0:67_0": "Rammaṃsīghappavesāya, puraṃpiṭakasaññitaṃ,",
  "anya-e1213n0:68_0": "Maggojumaggataṃmaggaṃ, saddāraññevisodhito;",
  "anya-e1213n0:69_0": "21.",
  "anya-e1213n0:70_0": "Teneva kiñci jalito jalito padīpo",
  "anya-e1213n0:71_0": "Kaccāyanuttiratano citagabbhakoṇe,",
  "anya-e1213n0:72_0": "Dhammādirājagurunā garumāmakena",
  "anya-e1213n0:73_0": "Dhammena yobbipatinā sagaruttanīto;",
  "anya-e1213n0:74_0": "Iti saddabindu pakaraṇaṃ parisamattaṃ.",
  "anya-e1213n0:75_0": "Yosaññamo guṇadhano nayanaṃ nijaṃva",
  "anya-e1213n0:76_0": "Sikkhāpayī mama mavaṃ sugatāgamādo,",
  "anya-e1213n0:77_0": "Salloka puñja suhado padumādi rāma",
  "anya-e1213n0:78_0": "Nāmo mahā yativarā cariyo samayhaṃ;",
  "anya-e1213n0:79_0": "Saddhādhanena vasatā viditamhi pupphā",
  "anya-e1213n0:80_0": "Rāmedhunā ariyavaṃsa dhajavhayena,",
  "anya-e1213n0:81_0": "Santena ñāṇatilako tyaparākhyakena",
  "anya-e1213n0:82_0": "Bālānametamavidhīyi mayāhitāya;"
}