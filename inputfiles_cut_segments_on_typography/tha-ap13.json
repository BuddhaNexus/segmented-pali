{
  "tha-ap13:0.1_0": "Therāpadāna",
  "tha-ap13:0.2_0": "Sīhāsaniyavagga",
  "tha-ap13:0.3_0": "1. Sīhāsanadāyakattheraapadāna",
  "tha-ap13:1.1_0": "“Nibbute lokanāthamhi,",
  "tha-ap13:1.2_0": "siddhatthe dvipaduttame;",
  "tha-ap13:1.3_0": "Vitthārike pāvacane,",
  "tha-ap13:1.4_0": "bāhujaññamhi sāsane.",
  "tha-ap13:2.1_0": "Pasannacitto sumano,",
  "tha-ap13:2.2_0": "sīhāsanamakāsahaṁ;",
  "tha-ap13:2.3_0": "Sīhāsanaṁ karitvāna,",
  "tha-ap13:2.4_0": "pādapīṭhamakāsahaṁ.",
  "tha-ap13:3.1_0": "Sīhāsane ca vassante,",
  "tha-ap13:3.2_0": "gharaṁ tattha akāsahaṁ;",
  "tha-ap13:3.3_0": "Tena cittappasādena,",
  "tha-ap13:3.4_0": "tusitaṁ upapajjahaṁ.",
  "tha-ap13:4.1_0": "Āyāmena catubbīsa-",
  "tha-ap13:4.2_0": "yojanaṁ āsi tāvade;",
  "tha-ap13:4.3_0": "Vimānaṁ sukataṁ mayhaṁ,",
  "tha-ap13:4.4_0": "vitthārena catuddasa.",
  "tha-ap13:5.1_0": "Sataṁ kaññāsahassāni,",
  "tha-ap13:5.2_0": "parivārenti maṁ sadā;",
  "tha-ap13:5.3_0": "Soṇṇamayañca pallaṅkaṁ,",
  "tha-ap13:5.4_0": "byamhe āsi sunimmitaṁ.",
  "tha-ap13:6.1_0": "Hatthiyānaṁ assayānaṁ,",
  "tha-ap13:6.2_0": "dibbayānaṁ upaṭṭhitaṁ;",
  "tha-ap13:6.3_0": "Pāsādā sivikā ceva,",
  "tha-ap13:6.4_0": "nibbattanti yadicchakaṁ.",
  "tha-ap13:7.1_0": "Maṇimayā ca pallaṅkā,",
  "tha-ap13:7.2_0": "aññe sāramayā bahū;",
  "tha-ap13:7.3_0": "Nibbattanti mamaṁ sabbe,",
  "tha-ap13:7.4_0": "sīhāsanassidaṁ phalaṁ.",
  "tha-ap13:8.1_0": "Soṇṇamayā rūpimayā,",
  "tha-ap13:8.2_0": "phalikāveḷuriyāmayā;",
  "tha-ap13:8.3_0": "Pādukā abhirūhāmi,",
  "tha-ap13:8.4_0": "pādapīṭhassidaṁ phalaṁ.",
  "tha-ap13:9.1_0": "Catunnavutito kappe,",
  "tha-ap13:9.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap13:9.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap13:9.4_0": "puññakammassidaṁ phalaṁ.",
  "tha-ap13:10.1_0": "Tesattatimhito kappe,",
  "tha-ap13:10.2_0": "indanāmā tayo janā;",
  "tha-ap13:10.3_0": "Dvesattatimhito kappe,",
  "tha-ap13:10.4_0": "tayo sumananāmakā.",
  "tha-ap13:11.1_0": "Samasattatito kappe,",
  "tha-ap13:11.2_0": "tayo varuṇanāmakā;",
  "tha-ap13:11.3_0": "Sattaratanasampannā,",
  "tha-ap13:11.4_0": "catudīpamhi issarā.",
  "tha-ap13:12.1_0": "Paṭisambhidā catasso,",
  "tha-ap13:12.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap13:12.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap13:12.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap13:13.1_0": "Itthaṁ sudaṁ āyasmā sīhāsanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap13:14.1_0": "Sīhāsanadāyakattherassāpadānaṁ paṭhamaṁ."
}