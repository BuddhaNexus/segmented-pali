{
  "pv3:0.1_0": "Petavatthu",
  "pv3:0.2_0": "Uragavagga",
  "pv3:0.3_0": "3. Pūtimukhapetavatthu",
  "pv3:1.1_0": "“Dibbaṁ subhaṁ dhāresi vaṇṇadhātuṁ,",
  "pv3:1.2_0": "Vehāyasaṁ tiṭṭhasi antalikkhe;",
  "pv3:1.3_0": "Mukhañca te kimayo pūtigandhaṁ,",
  "pv3:1.4_0": "Khādanti kiṁ kammamakāsi pubbe”.",
  "pv3:2.1_0": "“Samaṇo ahaṁ pāpotiduṭṭhavāco,",
  "pv3:2.2_0": "Tapassirūpo mukhasā asaññato;",
  "pv3:2.3_0": "Laddhā ca me tapasā vaṇṇadhātu,",
  "pv3:2.4_0": "Mukhañca me pesuṇiyena pūti.",
  "pv3:3.1_0": "Tayidaṁ tayā nārada sāmaṁ diṭṭhaṁ,",
  "pv3:3.2_0": "Anukampakā ye kusalā vadeyyuṁ;",
  "pv3:3.3_0": "‘Mā pesuṇaṁ mā ca musā abhāṇi,",
  "pv3:3.4_0": "Yakkho tuvaṁ hohisi kāmakāmī’”ti.",
  "pv3:4.1_0": "Pūtimukhapetavatthu tatiyaṁ."
}