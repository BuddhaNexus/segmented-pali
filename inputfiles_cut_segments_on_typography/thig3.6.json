{
  "thig3.6:0.1_0": "Therīgāthā 3.6",
  "thig3.6:0.2_0": "Tikanipāta",
  "thig3.6:0.3_0": "Sukkātherīgāthā",
  "thig3.6:1.1_0": "“Kiṁme katā rājagahe manussā,",
  "thig3.6:1.2_0": "Madhuṁ pītāva acchare;",
  "thig3.6:1.3_0": "Ye sukkaṁ na upāsanti,",
  "thig3.6:1.4_0": "Desentiṁ buddhasāsanaṁ.",
  "thig3.6:2.1_0": "Tañca appaṭivānīyaṁ,",
  "thig3.6:2.2_0": "asecanakamojavaṁ;",
  "thig3.6:2.3_0": "Pivanti maññe sappaññā,",
  "thig3.6:2.4_0": "valāhakamivaddhagū.",
  "thig3.6:3.1_0": "Sukkā sukkehi dhammehi,",
  "thig3.6:3.2_0": "vītarāgā samāhitā;",
  "thig3.6:3.3_0": "Dhāreti antimaṁ dehaṁ,",
  "thig3.6:3.4_0": "jetvā māraṁ savāhinin”ti.",
  "thig3.6:4.1_0": "… Sukkā therī …."
}