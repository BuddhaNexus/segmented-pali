{
  "thig2.1:0.1_0": "Therīgāthā 2.1",
  "thig2.1:0.2_0": "Dukanipāta",
  "thig2.1:0.3_0": "Abhirūpanandātherīgāthā",
  "thig2.1:1.1_0": "“Āturaṁ asuciṁ pūtiṁ,",
  "thig2.1:1.2_0": "passa nande samussayaṁ;",
  "thig2.1:1.3_0": "Asubhāya cittaṁ bhāvehi,",
  "thig2.1:1.4_0": "ekaggaṁ susamāhitaṁ.",
  "thig2.1:2.1_0": "Animittañca bhāvehi,",
  "thig2.1:2.2_0": "mānānusayamujjaha;",
  "thig2.1:2.3_0": "Tato mānābhisamayā,",
  "thig2.1:2.4_0": "upasantā carissasī”ti.",
  "thig2.1:3.1_0": "Itthaṁ sudaṁ abhirūpanandā therī gāthāyo abhāsitthāti."
}