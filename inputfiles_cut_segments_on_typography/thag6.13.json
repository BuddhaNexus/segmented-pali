{
  "thag6.13:0.1_0": "Theragāthā 6.13",
  "thag6.13:0.2_0": "Chakkanipāta",
  "thag6.13:0.3_0": "Paṭhamavagga",
  "thag6.13:0.4_0": "Sirimaṇḍattheragāthā",
  "thag6.13:1.1_0": "“Channamativassati,",
  "thag6.13:1.2_0": "vivaṭaṁ nātivassati;",
  "thag6.13:1.3_0": "Tasmā channaṁ vivaretha,",
  "thag6.13:1.4_0": "evaṁ taṁ nātivassati.",
  "thag6.13:2.1_0": "Maccunābbhahato loko,",
  "thag6.13:2.2_0": "jarāya parivārito;",
  "thag6.13:2.3_0": "Taṇhāsallena otiṇṇo,",
  "thag6.13:2.4_0": "icchādhūpāyito sadā.",
  "thag6.13:3.1_0": "Maccunābbhahato loko,",
  "thag6.13:3.2_0": "parikkhitto jarāya ca;",
  "thag6.13:3.3_0": "Haññati niccamattāṇo,",
  "thag6.13:3.4_0": "pattadaṇḍova takkaro.",
  "thag6.13:4.1_0": "Āgacchantaggikhandhāva,",
  "thag6.13:4.2_0": "maccu byādhi jarā tayo;",
  "thag6.13:4.3_0": "Paccuggantuṁ balaṁ natthi,",
  "thag6.13:4.4_0": "javo natthi palāyituṁ.",
  "thag6.13:5.1_0": "Amoghaṁ divasaṁ kayirā,",
  "thag6.13:5.2_0": "appena bahukena vā;",
  "thag6.13:5.3_0": "Yaṁ yaṁ vijahate rattiṁ,",
  "thag6.13:5.4_0": "tadūnaṁ tassa jīvitaṁ.",
  "thag6.13:6.1_0": "Carato tiṭṭhato vāpi,",
  "thag6.13:6.2_0": "āsīnasayanassa vā;",
  "thag6.13:6.3_0": "Upeti carimā ratti,",
  "thag6.13:6.4_0": "na te kālo pamajjitun”ti.",
  "thag6.13:6.5_0": "… Sirimaṇḍo thero …."
}