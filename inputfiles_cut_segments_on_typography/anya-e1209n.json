{
  "anya-e1209n:6_0": "Telakaṭāhagāthā",
  "anya-e1209n:7_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1209n:8_0": "1.",
  "anya-e1209n:9_0": "Laṃkissaro jayatu vāraṇarājagāmī",
  "anya-e1209n:10_0": "Bhogindabhoga rucirāyata pīṇa bāhu,",
  "anya-e1209n:11_0": "Sādhupacāranirato guṇasannivāso",
  "anya-e1209n:12_0": "Dhamme ṭhito vīgatakodhamadāvalepo;",
  "anya-e1209n:13_0": "2.",
  "anya-e1209n:14_0": "Yo sabbalokamahito karuṇādhivāso",
  "anya-e1209n:15_0": "Mokkhākaro ravikulambara puṇṇa cando,",
  "anya-e1209n:16_0": "Ñeyyodadhiṃ suvipulaṃ sakalaṃ vibuddho",
  "anya-e1209n:17_0": "Lokuttamaṃ namatha taṃ sirasā munindaṃ;",
  "anya-e1209n:18_0": "3.",
  "anya-e1209n:19_0": "Sopānamālamamalaṃ tidasālayassa",
  "anya-e1209n:20_0": "Saṃsāra sāgarasamuttaraṇāya setuṃ,",
  "anya-e1209n:21_0": "Sabbāgatībhaya vivajjita khema maggaṃ",
  "anya-e1209n:22_0": "Dhammaṃ namassatha sadā muninā paṇītaṃ;",
  "anya-e1209n:23_0": "4.",
  "anya-e1209n:24_0": "Deyyaṃ tadappamapi yattha pasanna cittā",
  "anya-e1209n:25_0": "Datvā narā phalamuḷārataraṃ labhante,",
  "anya-e1209n:26_0": "Taṃ sabbadā dasabalenapi suppasatthaṃ",
  "anya-e1209n:27_0": "Saṅghaṃ namassatha sadāmitapuññakhettaṃ;",
  "anya-e1209n:28_0": "5.",
  "anya-e1209n:29_0": "Tejo balena mahatā ratanattayassa",
  "anya-e1209n:30_0": "Lokattayaṃ samadhigacchati yena mokkhaṃ,",
  "anya-e1209n:31_0": "Rakkhā na catthi ca samā ratanattayassa",
  "anya-e1209n:32_0": "Tasmā sadā bhajatha taṃ ratanattayaṃ bho;",
  "anya-e1209n:33_0": "6.",
  "anya-e1209n:34_0": "Laṃkissaro parahitekarato nirāso",
  "anya-e1209n:35_0": "Rattimpi jāgararato karuṇādhivāso,",
  "anya-e1209n:36_0": "Lokaṃ vibodhayati lokahitāya kāmaṃ",
  "anya-e1209n:37_0": "Dhammaṃ samācaratha jāgariyānuyuttā;",
  "anya-e1209n:38_0": "7.",
  "anya-e1209n:39_0": "Sattopakāra niratā kusale sahāyā",
  "anya-e1209n:40_0": "Bho dullabhā bhuvi narā vihatappamādā,",
  "anya-e1209n:41_0": "Laṃkādhipaṃ guṇadhanaṃ kusale sahāyaṃ",
  "anya-e1209n:42_0": "Āgamma saṃcaratha dhammamalaṃ pamādaṃ;",
  "anya-e1209n:43_0": "8.",
  "anya-e1209n:44_0": "Dhammo tiloka saraṇo paramo rasānaṃ",
  "anya-e1209n:45_0": "Dhammo mahaggharatano ratanesu loke,",
  "anya-e1209n:46_0": "Dhammo bhave tibhavadukkha vināsahetu",
  "anya-e1209n:47_0": "Dhammaṃ samācaratha jāgariyānuyuttā;",
  "anya-e1209n:48_0": "9.",
  "anya-e1209n:49_0": "Niddaṃ vinodayatha bhāvayathappameyyaṃ",
  "anya-e1209n:50_0": "Dukkhaṃ aniccampi ceha anattatañca,",
  "anya-e1209n:51_0": "Dehe ratiṃ jahatha ja jajjarabhājanābho",
  "anya-e1209n:52_0": "Dhammaṃ samācaratha jāgariyānuyuttā;",
  "anya-e1209n:53_0": "10.",
  "anya-e1209n:54_0": "Okāsa majja mama natthi suve karissaṃ",
  "anya-e1209n:55_0": "Dhammaṃ itīhalasatā kusalappayoge,",
  "anya-e1209n:56_0": "Nā’laṃ tiyaddhasu tathā bhuvanattaye ca",
  "anya-e1209n:57_0": "Kāmaṃ na catthi manujo maraṇā pamutto;",
  "anya-e1209n:58_0": "11.",
  "anya-e1209n:59_0": "Khitto yathā nabhasi kenacideva leḍḍu",
  "anya-e1209n:60_0": "Bhūmiṃ samāpatti bhāratayā khaṇena,",
  "anya-e1209n:61_0": "Jātattameva khalu kāraṇamekamatra",
  "anya-e1209n:62_0": "Lokaṃ sadā nanu dhuvaṃ maraṇāya gantuṃ;",
  "anya-e1209n:63_0": "12.",
  "anya-e1209n:64_0": "Kāmaṃ narassa patato girimuddhanāto",
  "anya-e1209n:65_0": "Majjhe na kiñci bhayanissaraṇāya hetu,",
  "anya-e1209n:66_0": "Kāmaṃ vajanti maraṇaṃ tibhavesu sattā",
  "anya-e1209n:67_0": "Bhoge ratiṃ pajahathāpi ca jīvite ca;",
  "anya-e1209n:68_0": "13.",
  "anya-e1209n:69_0": "Kāmaṃ patanti mahiyā khalu vassadhārā",
  "anya-e1209n:70_0": "Vijjullatā vitatamegha mukhā pamuttā,",
  "anya-e1209n:71_0": "Evaṃ narā maraṇabhīma papātamajjhe",
  "anya-e1209n:72_0": "Kāmaṃ patanti nahi koci bhavesu nicco;",
  "anya-e1209n:73_0": "14.",
  "anya-e1209n:74_0": "Velātaṭe paṭutaroru taraṃgamālā",
  "anya-e1209n:75_0": "Nāsaṃ vajanti satataṃ salilālayassa,",
  "anya-e1209n:76_0": "Nāsaṃ tathā samupayanti narāmarānaṃ",
  "anya-e1209n:77_0": "Pāṇāni dāruṇatare maraṇodadhimhi;",
  "anya-e1209n:78_0": "15.",
  "anya-e1209n:79_0": "Ruddhopi so rathavarassagajādhipehi",
  "anya-e1209n:80_0": "Yodhehi cāpi sabalehi ca sāyudhehi,",
  "anya-e1209n:81_0": "Lokaṃ vivaṃciya sadā maraṇūsabho so",
  "anya-e1209n:82_0": "Kāmaṃ nihanti bhuvanattaya sāli daṇḍaṃ;",
  "anya-e1209n:83_0": "16.",
  "anya-e1209n:84_0": "Bho mārutena mahatā vihato padīpo",
  "anya-e1209n:85_0": "Khippaṃ vināsa mukhameti mahappabhopi,",
  "anya-e1209n:86_0": "Loke tathā maraṇacaṇḍa samīraṇena",
  "anya-e1209n:87_0": "Khippaṃ vinassati narāyumahā padīpo;",
  "anya-e1209n:88_0": "17",
  "anya-e1209n:89_0": "Rāmajjunappabhūti bhūpati puṃgavā ca",
  "anya-e1209n:90_0": "Sūrā pure raṇamukhe vijitāri saṅghā,",
  "anya-e1209n:91_0": "Tepīha caṇḍa maraṇogha nimuggadehā",
  "anya-e1209n:92_0": "Nāsaṃ gatā jagati ke maraṇā pamuttā?",
  "anya-e1209n:93_0": "18.",
  "anya-e1209n:94_0": "Lakkhī ca sāgarapaṭā sadharādharā ca",
  "anya-e1209n:95_0": "Sampattiyo ca vividhā api rūpasobhā,",
  "anya-e1209n:96_0": "Sabbā ca tā api ca mittasutā ca dārā",
  "anya-e1209n:97_0": "Ke cāpi kaṃ anugatā maraṇaṃ vajantaṃ?",
  "anya-e1209n:98_0": "19.",
  "anya-e1209n:99_0": "Brahmāsurāsuragaṇā ca mahānubhāvā",
  "anya-e1209n:100_0": "Gandhabbakinnaramahoragarakkhasā ca,",
  "anya-e1209n:101_0": "Te cā pare ca maraṇaggisikhāya sabbe",
  "anya-e1209n:102_0": "Ante patanti salabhā iva khīṇapuññā;",
  "anya-e1209n:103_0": "20.",
  "anya-e1209n:104_0": "Ye sāriputtapamukhā munisāvakā ca",
  "anya-e1209n:105_0": "Suddhā sadāsavanudā paramiddhipattā,",
  "anya-e1209n:106_0": "Te cāpi maccuvaḷabhā mukha sannimuggā",
  "anya-e1209n:107_0": "Dīpānivānalahatā khayataṃ upetā;",
  "anya-e1209n:108_0": "21.",
  "anya-e1209n:109_0": "Buddhāpi buddhakamalāmalacārunettā",
  "anya-e1209n:110_0": "Battiṃsalakkhaṇa virājita rūpasobhā,",
  "anya-e1209n:111_0": "Sabbāsacakkhayakarāpi ca lokanāthā",
  "anya-e1209n:112_0": "Sammadditā maraṇamattamahāgajena;",
  "anya-e1209n:113_0": "22.",
  "anya-e1209n:114_0": "Rogāturesu karuṇā na jarāturesu",
  "anya-e1209n:115_0": "Khiḍḍāparesu sukumārakumārakesu,",
  "anya-e1209n:116_0": "Lokaṃ sadā hanati maccu mahāgajindo",
  "anya-e1209n:117_0": "Davānalo vanamivāvarataṃ asesaṃ;",
  "anya-e1209n:118_0": "23.",
  "anya-e1209n:119_0": "Āpuṇṇatā na salile na jalāsayassa",
  "anya-e1209n:120_0": "Kaṭṭhassa cāpi bahutā na hutāsanassa,",
  "anya-e1209n:121_0": "Bhutvāna so tibhūvanampi tathā asesaṃ",
  "anya-e1209n:122_0": "Bho niddayo na khalu pītimupeti maccu;",
  "anya-e1209n:123_0": "24.",
  "anya-e1209n:124_0": "Bho moha mohitatayā vivaso adhañño",
  "anya-e1209n:125_0": "Loko patatyapipi maccumukhe subhīme,",
  "anya-e1209n:126_0": "Bhoge ratiṃ samupayāti nihīnapañño",
  "anya-e1209n:127_0": "Dolā taraṅgacapale supinopameyye;",
  "anya-e1209n:128_0": "25.",
  "anya-e1209n:129_0": "Ekopi maccurabhihantumalaṃ tilokaṃ",
  "anya-e1209n:130_0": "Kiṃ niddayā api jarāmaraṇānuyāyī,",
  "anya-e1209n:131_0": "Ko vā kareyya vibhasuvesu ca jīvitāsaṃ",
  "anya-e1209n:132_0": "Jāto naro supina saṃgama sannibhesu;",
  "anya-e1209n:133_0": "26.",
  "anya-e1209n:134_0": "Niccāturaṃ jagadidaṃ sabhayaṃ sasokaṃ",
  "anya-e1209n:135_0": "Disvā ca kodhamadamohajarābhibhūtaṃ,",
  "anya-e1209n:136_0": "Ubbegamattamapi yassa na vijjatī ce",
  "anya-e1209n:137_0": "So dāruṇona maraṇaṃ vata taṃ dhiratthu!",
  "anya-e1209n:138_0": "Bho bho na passatha jarāsidharañhi maccu",
  "anya-e1209n:139_0": "Māhaññamānamakhilaṃ satataṃ tilokaṃ,",
  "anya-e1209n:140_0": "Kiṃ niddayā nayatha vītabhayā tiyāmaṃ",
  "anya-e1209n:141_0": "Dhammaṃ sadā’savanudaṃ caratha’ppamattā;",
  "anya-e1209n:142_0": "28.",
  "anya-e1209n:143_0": "Bhāvetha bho maraṇamāravivajjanāya",
  "anya-e1209n:144_0": "Loke sadā maraṇa saññamimaṃ yatattā,",
  "anya-e1209n:145_0": "Evañhi bhāvanaratassa narassa tassa",
  "anya-e1209n:146_0": "Taṇhā pahīyati sarīragatā asesā;",
  "anya-e1209n:147_0": "29.",
  "anya-e1209n:148_0": "Rūpaṃ jarā piyataraṃ malinīkaroti",
  "anya-e1209n:149_0": "Sabbaṃ balaṃ harati attani ghorarogo,",
  "anya-e1209n:150_0": "Nānūpabhoga parirakkhita mattabhāvaṃ",
  "anya-e1209n:151_0": "Bho maccu saṃharati kiṃ phalamattabhāve?",
  "anya-e1209n:152_0": "30.",
  "anya-e1209n:153_0": "Kammānilāpahatarogataraṃgabhaṃge",
  "anya-e1209n:154_0": "Saṃsāra sāgara mukhe vitate vipannā,",
  "anya-e1209n:155_0": "Mā māpamādamakarittha karotha mokkhaṃ",
  "anya-e1209n:156_0": "Dukkhodayo nanu pamādamayaṃ narānaṃ;",
  "anya-e1209n:157_0": "31.",
  "anya-e1209n:158_0": "Bhogā ca mittasutaporisa bandhavā ca",
  "anya-e1209n:159_0": "Nārī ca jīvitasamā api khettavatthu,",
  "anya-e1209n:160_0": "Sabbāni tāni paralokamito vajantaṃ",
  "anya-e1209n:161_0": "Nānubbajanti kusalākusalaṃva loke;",
  "anya-e1209n:162_0": "32.",
  "anya-e1209n:163_0": "Bho vijjucaṃcalatare bhavasāgaramhi",
  "anya-e1209n:164_0": "Khittā purā katamahāpavanena tena,",
  "anya-e1209n:165_0": "Kāmaṃ vibhijjati khaṇena sarīranāvā",
  "anya-e1209n:166_0": "Hatthe karotha paramaṃ guṇahatthasāraṃ;",
  "anya-e1209n:167_0": "33.",
  "anya-e1209n:168_0": "Niccaṃ vibhijjatiha āmaka bhājanaṃva",
  "anya-e1209n:169_0": "Saṃrakkhitopi bahudhā iha attabhāvo,",
  "anya-e1209n:170_0": "Dhammaṃ samācaratha saggapatippatiṭṭhaṃ",
  "anya-e1209n:171_0": "Dhammo suciṇṇamihameva phalaṃ dadāti;",
  "anya-e1209n:172_0": "34.",
  "anya-e1209n:173_0": "Rantvā sadā piyatare divi devarajje",
  "anya-e1209n:174_0": "Namhā cavanti vibudhā api khīṇapuññā,",
  "anya-e1209n:175_0": "Sabbaṃ sukhaṃ divi bhuvīha viyoganiṭṭhaṃ",
  "anya-e1209n:176_0": "Ko paññavā bhavasukhesu ratiṃ kareyya?",
  "anya-e1209n:177_0": "35.",
  "anya-e1209n:178_0": "Buddho sasāvakagaṇo jagadekanātho",
  "anya-e1209n:179_0": "Tārāvalīparivutopi ca puṇṇacando,",
  "anya-e1209n:180_0": "Indopi devamakuṭaṃkita pādakañjo",
  "anya-e1209n:181_0": "Ko pheṇapiṇḍa-na-samo tibhavesu jāto?",
  "anya-e1209n:182_0": "36.",
  "anya-e1209n:183_0": "Līlāvataṃsamapi yobbana rūpasobhaṃ",
  "anya-e1209n:184_0": "Attūpamaṃ piyajanena ca sampayogaṃ,",
  "anya-e1209n:185_0": "Disvāpi vijjucapalaṃ kurute pamādaṃ",
  "anya-e1209n:186_0": "Bho mohamohitajano bhavarāgaratto;",
  "anya-e1209n:187_0": "37.",
  "anya-e1209n:188_0": "Putto pitā bhavati mātu patīha putto",
  "anya-e1209n:189_0": "Nārī kadāci jananī ca pitā ca putto,",
  "anya-e1209n:190_0": "Evaṃ sadā viparivattati jīvaloko",
  "anya-e1209n:191_0": "Citte sadāticapale khalu jātiraṅge;",
  "anya-e1209n:192_0": "38.",
  "anya-e1209n:193_0": "Rantvā pure vividhaphullalatākulehi",
  "anya-e1209n:194_0": "Devāpi nandanavane surasundarīhi,",
  "anya-e1209n:195_0": "Te ve’kadā vitatakaṇṭakasaṃkaṭesu",
  "anya-e1209n:196_0": "Bho koṭisimbalivanesu phusanti dukkhaṃ;",
  "anya-e1209n:197_0": "39.",
  "anya-e1209n:198_0": "Bhutvā sudhannamapi kañcanabhājanesu",
  "anya-e1209n:199_0": "Sagge pure suravarā paramiddhipattā,",
  "anya-e1209n:200_0": "Te cāpi pajjalitalohagulaṃ gilanti",
  "anya-e1209n:201_0": "Kāmaṃ kadāci narakālaya vāsabhūtā;",
  "anya-e1209n:202_0": "40.",
  "anya-e1209n:203_0": "Bhutvā narissaravarā ca mahiṃ asesaṃ",
  "anya-e1209n:204_0": "Devādhipā ca divi dibbasukhaṃ surammaṃ,",
  "anya-e1209n:205_0": "Vāsaṃ kadāci khurasañcitabhūtalesu",
  "anya-e1209n:206_0": "Te vā mahārathagaṇānugatā divīha;",
  "anya-e1209n:207_0": "41.",
  "anya-e1209n:208_0": "Devaṅganā lalitabhinnataraṅgamāle",
  "anya-e1209n:209_0": "Raṅge mahissarajaṭāmakuṭānuyāte,",
  "anya-e1209n:210_0": "Rantvā pure suravarā pamadāsahāyā",
  "anya-e1209n:211_0": "Te cāpi ghorataravetaraṇiṃ patanti;",
  "anya-e1209n:212_0": "42.",
  "anya-e1209n:213_0": "Phullāni pallavalatāphalasaṃkulāni",
  "anya-e1209n:214_0": "Rammāni nandanavanāni manoramāni,",
  "anya-e1209n:215_0": "Dibbaccharālalitapuṇṇadarīmukhāni",
  "anya-e1209n:216_0": "Kelāsamerusikharāni ca yanti nāsaṃ;",
  "anya-e1209n:217_0": "43.",
  "anya-e1209n:218_0": "Dolā’nilā’nalataraṃgasamā hi bhogā",
  "anya-e1209n:219_0": "Vijjuppabhāticapalāni ca jīvitāni,",
  "anya-e1209n:220_0": "Māyāmarīcijalasomasamaṃ sarīraṃ",
  "anya-e1209n:221_0": "Ko jīvite ca vibhave ca kareyya rāgaṃ?",
  "anya-e1209n:222_0": "44.",
  "anya-e1209n:223_0": "Kiṃ dukkhamatthi na bhavesu ca dāruṇesu",
  "anya-e1209n:224_0": "Sattopi tassa vividhassa na bhājano ko,",
  "anya-e1209n:225_0": "Jāto yathā maraṇarogajarābhibhūto",
  "anya-e1209n:226_0": "Ko sajjano bhavaratiṃ pihayeyya’bālo?",
  "anya-e1209n:227_0": "45.",
  "anya-e1209n:228_0": "Ke vāpi pajjalitalohagulaṃ gilanti",
  "anya-e1209n:229_0": "Sakkā kathañcidapi pāṇitalena bhīmaṃ,",
  "anya-e1209n:230_0": "Dukkhodayaṃ asucinissavanaṃ anantaṃ",
  "anya-e1209n:231_0": "Ko kāmayetha khalu dehamimaṃ abālo?",
  "anya-e1209n:232_0": "46.",
  "anya-e1209n:233_0": "Loke na maccusamamatthi bhayaṃ narānaṃ",
  "anya-e1209n:234_0": "Na vyādhidukkhasamamatthi ca kiṃci dukkhaṃ,",
  "anya-e1209n:235_0": "Evaṃ virūpakaraṇaṃ na jarāsamānaṃ",
  "anya-e1209n:236_0": "Mohena bho ratimupeti tathāpi dehe;",
  "anya-e1209n:237_0": "47.",
  "anya-e1209n:238_0": "Nissārato nalakalīkadalīsamānaṃ",
  "anya-e1209n:239_0": "Attānameva parihaññati attahetu,",
  "anya-e1209n:240_0": "Sampositopi kusahāya ivākataññū",
  "anya-e1209n:241_0": "Kāyo na yassa anugacchati kālakerā;",
  "anya-e1209n:242_0": "48.",
  "anya-e1209n:243_0": "Taṃ pheṇapiṇḍasadisaṃ visasūlakappaṃ",
  "anya-e1209n:244_0": "Toyā’nilā’nalamahīuragādhivāsaṃ,",
  "anya-e1209n:245_0": "Jiṇṇālayaṃva paridubbalamattabhāvaṃ",
  "anya-e1209n:246_0": "Disvā naro kathamupeti ratiṃ sapañño?",
  "anya-e1209n:247_0": "49.",
  "anya-e1209n:248_0": "Āyukkhayaṃ samupayāti khaṇe khaṇepi",
  "anya-e1209n:249_0": "Anveti maccu hananāya jarāsipāṇī,",
  "anya-e1209n:250_0": "Kālaṃ tathā na parivattati taṃ atītaṃ",
  "anya-e1209n:251_0": "Dukkhaṃ idaṃ nanu bhavesu acintanīyaṃ?",
  "anya-e1209n:252_0": "50.",
  "anya-e1209n:253_0": "Appāyukassa maraṇaṃ sulabhaṃ bhavesu",
  "anya-e1209n:254_0": "Dīghāyukassa ca jarā vyasanaṃ ca’nekaṃ,",
  "anya-e1209n:255_0": "Evaṃ bhave ubhayatopi ca dukkhameva",
  "anya-e1209n:256_0": "Dhammaṃ samācaratha dukkhavināsanāya;",
  "anya-e1209n:257_0": "51.",
  "anya-e1209n:258_0": "Dukkhagginā sumahatā paripīḷitesu",
  "anya-e1209n:259_0": "Lokattayassa vasato bhavavārakesu,",
  "anya-e1209n:260_0": "Sabbattatā sucaritassa pamādakālo",
  "anya-e1209n:261_0": "Bho bho na hoti paramaṃ kusalaṃ ciṇātha;",
  "anya-e1209n:262_0": "52.",
  "anya-e1209n:263_0": "Appaṃ sukhaṃ jalalavaṃ viya bho tiṇagge",
  "anya-e1209n:264_0": "Dukkhantu sāgarajalaṃ viya sabbaloke,",
  "anya-e1209n:265_0": "Saṃkappanā tadapi hoti sabhāvato hi",
  "anya-e1209n:266_0": "Sabbaṃ tilokamapi kevaladukkhameva;",
  "anya-e1209n:267_0": "53.",
  "anya-e1209n:268_0": "Kāyo na yassa anugacchati kāyahetu",
  "anya-e1209n:269_0": "Bālo anekavidhamācaratīha dukkhaṃ,",
  "anya-e1209n:270_0": "Kāyo sadā kali malākalilañhi loke",
  "anya-e1209n:271_0": "Kāye rato’navarataṃ vyasanaṃ pareti",
  "anya-e1209n:272_0": "54.",
  "anya-e1209n:273_0": "Mīḷhākaraṃ kalimalākaramāmagandhaṃ",
  "anya-e1209n:274_0": "Sūḷāsisallavisapannagarogabhūtaṃ,",
  "anya-e1209n:275_0": "Dehaṃ vipassatha jarāmaraṇādhivāsaṃ",
  "anya-e1209n:276_0": "Tucchaṃ sadā vigatasāramimaṃ vinindyaṃ;",
  "anya-e1209n:277_0": "55.",
  "anya-e1209n:278_0": "Dukkhaṃ aniccamasubhaṃ vata attabhāvaṃ",
  "anya-e1209n:279_0": "Mā saṃkilesaya na vijjati jātu nicco,",
  "anya-e1209n:280_0": "Ambho na vijjati hi appamapīha sāraṃ",
  "anya-e1209n:281_0": "Sāraṃ samācaratha dhammamalaṃ pamādaṃ;",
  "anya-e1209n:282_0": "56.",
  "anya-e1209n:283_0": "Māyāmarīcikadalīnalapheṇapuñja-",
  "anya-e1209n:284_0": "Gaṃgātaraṅgajalabubbulasannibhesu,",
  "anya-e1209n:285_0": "Khandhesu pañcasu chaḷāyatanesu tesu",
  "anya-e1209n:286_0": "Attā na vijjati hi ko na vadeyya’bālo?",
  "anya-e1209n:287_0": "57.",
  "anya-e1209n:288_0": "Vañjhāsuto sasavisāṇamaye rathe tu,",
  "anya-e1209n:289_0": "Dhāveyya ce cirataraṃ sadhuraṃ gahetvā,",
  "anya-e1209n:290_0": "Dīpaccimālamiva taṃ khaṇabhaṅgabhūtaṃ",
  "anya-e1209n:291_0": "Attāti dubbalatarantu vadeyya dehaṃ;",
  "anya-e1209n:292_0": "58.",
  "anya-e1209n:293_0": "Bālo yathā salilabubbulabhājanena",
  "anya-e1209n:294_0": "Ākaṇṭhato vata pibeyya marīcitoyaṃ,",
  "anya-e1209n:295_0": "Attāni sārarahitaṃ kadalīsamānaṃ",
  "anya-e1209n:296_0": "Mohā bhaṇeyya khalu dehamimaṃ anattaṃ;",
  "anya-e1209n:297_0": "59.",
  "anya-e1209n:298_0": "Yo’dumbarassa kusumena marīcitoyaṃ",
  "anya-e1209n:299_0": "Vāsaṃ yadicchati sa khedamupeti bālo,",
  "anya-e1209n:300_0": "Attānameva parihaññati attahetu",
  "anya-e1209n:301_0": "Attā na vijjati kadācidapīha dehe;",
  "anya-e1209n:302_0": "60.",
  "anya-e1209n:303_0": "Poso yathā hi kadalī suvinibbhujanto",
  "anya-e1209n:304_0": "Sāraṃ tadappampi nopalabheyya kāmaṃ,",
  "anya-e1209n:305_0": "Khandhesu paṃcasu chaḷāyatanesu tesu",
  "anya-e1209n:306_0": "Suññesu kiñcidapi nopalabheyya sāraṃ;",
  "anya-e1209n:307_0": "61.",
  "anya-e1209n:308_0": "Suttaṃ vinā na paṭabhāvamihatthi kiṃci",
  "anya-e1209n:309_0": "Dehaṃ vinā na khalu koci mihatthi satto,",
  "anya-e1209n:310_0": "Deho sabhāvarahito khaṇabhaṃgayutto,",
  "anya-e1209n:311_0": "Ko attahetu aparo bhuvi vijjatīha?",
  "anya-e1209n:312_0": "62.",
  "anya-e1209n:313_0": "Disvā marīcisalilañhi sudūrato bho",
  "anya-e1209n:314_0": "Bālo migo samupadhāvati toyasaññī,",
  "anya-e1209n:315_0": "Evaṃ sabhāvarahite viparītasiddhe",
  "anya-e1209n:316_0": "Dehe pareti parikappanayā hi rāgaṃ;",
  "anya-e1209n:317_0": "63.",
  "anya-e1209n:318_0": "Dehe sabhāvarahite parikappasiddhe",
  "anya-e1209n:319_0": "Attā na vijjati hi vijjumivantalikkhe,",
  "anya-e1209n:320_0": "Bhāvetha bhāvanaratā vigatappamādā",
  "anya-e1209n:321_0": "Sabbāsavappahananāya anattasaññaṃ;",
  "anya-e1209n:322_0": "64.",
  "anya-e1209n:323_0": "Lālākarīsarudhirassuvasānulittaṃ",
  "anya-e1209n:324_0": "Dehaṃ imaṃ kalimalākalilaṃ asāraṃ,",
  "anya-e1209n:325_0": "Sattā sadā pariharanti jigucchanīyaṃ",
  "anya-e1209n:326_0": "Nānāsucīhi paripuṇṇaghaṭaṃ yatheva;",
  "anya-e1209n:327_0": "65.",
  "anya-e1209n:328_0": "Ṇahātvā jalañhi sakalaṃ catusāgarassa",
  "anya-e1209n:329_0": "Meruppamāṇamapi gandhamanuttarañca,",
  "anya-e1209n:330_0": "Pappoti neva manujo hi suciṃ kadāci",
  "anya-e1209n:331_0": "Kiṃ bho vipassatha guṇaṃ kimu attabhāve?",
  "anya-e1209n:332_0": "66.",
  "anya-e1209n:333_0": "Deho sa eva vividhāsucisannidhāno",
  "anya-e1209n:334_0": "Deho sa eva vadhabandhanarogabhūto,",
  "anya-e1209n:335_0": "Deho sa eva navadhā paribhinnagaṇḍo",
  "anya-e1209n:336_0": "Dehaṃ vinā bhayakaraṃ na susānamatthi;",
  "anya-e1209n:337_0": "67.",
  "anya-e1209n:338_0": "Antogataṃ yadiva muttakarīsabhāgo",
  "anya-e1209n:339_0": "Dehā bahiṃ aticareyya vinikkhamitvā,",
  "anya-e1209n:340_0": "Mātā pitā vikaruṇā ca vinaṭṭhapemā",
  "anya-e1209n:341_0": "Kāmaṃ bhaveyyu kimu bandhusutā ca dārā?",
  "anya-e1209n:342_0": "68.",
  "anya-e1209n:343_0": "Dehaṃ yathā navamukhaṃ kimisaṅghagehaṃ",
  "anya-e1209n:344_0": "Maṃsaṭṭhisedarudhirākalilaṃ vigandhaṃ,",
  "anya-e1209n:345_0": "Posenti ye vividhapāpamihācaritvā",
  "anya-e1209n:346_0": "Te mohitā maraṇadhammamaho vatevaṃ!",
  "anya-e1209n:347_0": "69.",
  "anya-e1209n:348_0": "Gaṇḍūpame vividharoga nivāsabhūte",
  "anya-e1209n:349_0": "Kāye sadā rudhiramuttakarīsapuṇṇe,",
  "anya-e1209n:350_0": "Yo ettha nandati naro sasigālabhakkhe",
  "anya-e1209n:351_0": "Kāmañhi socati parattha sa bālabuddhi;",
  "anya-e1209n:352_0": "70.",
  "anya-e1209n:353_0": "Bho pheṇapiṇḍasadiso viya sārahīno",
  "anya-e1209n:354_0": "Mīḷhālayo viya sadā paṭikūlagandho,",
  "anya-e1209n:355_0": "Āsīvisālayanibho sabhayo sadukkho",
  "anya-e1209n:356_0": "Deho sadā savati loṇaghaṭova bhinno;",
  "anya-e1209n:357_0": "71.",
  "anya-e1209n:358_0": "Jātaṃ yathā na kamalaṃ bhuvi nindanīyaṃ",
  "anya-e1209n:359_0": "Paṅkesu bho asucitoya samākulesu,",
  "anya-e1209n:360_0": "Jātaṃ tathā parahitampi ca dehabhūtaṃ",
  "anya-e1209n:361_0": "Taṃ nindanīyamiha jātu na hoti loke;",
  "anya-e1209n:362_0": "72.",
  "anya-e1209n:363_0": "Dvattiṃsabhāgaparipūrataro viseso",
  "anya-e1209n:364_0": "Kāyo yathā hi naranāri gaṇassa loke,",
  "anya-e1209n:365_0": "Kāyesu kiṃ phalamihatthi ca paṇḍitānaṃ",
  "anya-e1209n:366_0": "Kāmaṃ tadeva nanu hoti paropakāraṃ;",
  "anya-e1209n:367_0": "73.",
  "anya-e1209n:368_0": "Posona paṇḍitatarena tathāpi deho",
  "anya-e1209n:369_0": "Sabbattanā cirataraṃ paripālanīyo,",
  "anya-e1209n:370_0": "Dhammaṃ careyya suciraṃ khalu jīvamāno",
  "anya-e1209n:371_0": "Dhamme have maṇivaro iva kāmado bho",
  "anya-e1209n:372_0": "74.",
  "anya-e1209n:373_0": "Khīre yathā suparibhāvitamosadhamhi",
  "anya-e1209n:374_0": "Snehena osadhabalaṃ paribhāsateva,",
  "anya-e1209n:375_0": "Dhammo tathā iha samācarito hi loke",
  "anya-e1209n:376_0": "Chāyāva yāti paraloka mito vajantaṃ;",
  "anya-e1209n:377_0": "75.",
  "anya-e1209n:378_0": "Kāyassa bho viracitassa yathānukūlaṃ",
  "anya-e1209n:379_0": "Chāyā vibhāti rucirāmaladappaṇe tu,",
  "anya-e1209n:380_0": "Katvā tatheva paramaṃ kusalaṃ parattha",
  "anya-e1209n:381_0": "Sambhūsitā iva bhavanti phalena tena;",
  "anya-e1209n:382_0": "76.",
  "anya-e1209n:383_0": "Dehe tathā vividhadukkha nivāsabhūte",
  "anya-e1209n:384_0": "Mohā pamādavasagā sukhasaññamūḷhā,",
  "anya-e1209n:385_0": "Tikkhe yathā khuramukhe madhulehamāno",
  "anya-e1209n:386_0": "Bāḷhañca dukkhamanugacchati hīnapañño;",
  "anya-e1209n:387_0": "77.",
  "anya-e1209n:388_0": "Saṃkapparāgavigate niratattabhāve",
  "anya-e1209n:389_0": "Dukkhaṃ sadā samadhigacchati appapañño,",
  "anya-e1209n:390_0": "Mūḷhassa ceva sukhasaññamihatthiloke",
  "anya-e1209n:391_0": "Kiṃpakkameva nanu hoti vicāramāne;",
  "anya-e1209n:392_0": "78.",
  "anya-e1209n:393_0": "Sabbopabhoga dhanadhaññavisesalābhī",
  "anya-e1209n:394_0": "Rūpena bho sa makaraddhajasannibhopi,",
  "anya-e1209n:395_0": "Yo yobbanepi maraṇaṃ labhate akāmaṃ",
  "anya-e1209n:396_0": "Kāmaṃ paratthaparapāṇaharo naro hi;",
  "anya-e1209n:397_0": "79.",
  "anya-e1209n:398_0": "So yācako bhavati bhinnakapālahattho",
  "anya-e1209n:399_0": "Muṇḍo dhigakkharasatehi ca tajjayanto,",
  "anya-e1209n:400_0": "Bhikkhaṃ sadāribhavane sakucelavāso",
  "anya-e1209n:401_0": "Dehe paratthi paracittaharo naro yo;",
  "anya-e1209n:402_0": "80.",
  "anya-e1209n:403_0": "Itthī namuñcati sadā puna itthibhāvā",
  "anya-e1209n:404_0": "Nārī sadā bhavati so puriso parattha,",
  "anya-e1209n:405_0": "Yo ācareyya paradāramalaṅghanīyaṃ",
  "anya-e1209n:406_0": "Ghorañca vindati sadā vyasanañca nekaṃ;",
  "anya-e1209n:407_0": "81.",
  "anya-e1209n:408_0": "Dīno vigandhavadano ca jaḷo apañño",
  "anya-e1209n:409_0": "Mūgo sadā bhavati appiyadassano ca,",
  "anya-e1209n:410_0": "Pappoti dukkhamatulañca manussabhūto",
  "anya-e1209n:411_0": "Vācaṃ musā bhaṇati yo hi apaññasatto;",
  "anya-e1209n:412_0": "82.",
  "anya-e1209n:413_0": "Ummattakā vigatalajjaguṇā bhavanti",
  "anya-e1209n:414_0": "Dīnā sadā vyasanasokaparāyaṇā ca,",
  "anya-e1209n:415_0": "Jātā bhavesu vividhesu virūpadehā",
  "anya-e1209n:416_0": "Pītvā halāhalavisaṃva suraṃ vipaññā;",
  "anya-e1209n:417_0": "83.",
  "anya-e1209n:418_0": "Pāpāni yena iha ācaritāni yāni",
  "anya-e1209n:419_0": "Yo vassakoṭinahutāni anappakāni,",
  "anya-e1209n:420_0": "Laddhāna ghoramatulaṃ narakesu dukkhaṃ",
  "anya-e1209n:421_0": "Pappoti cettha vividhavyasanañca nekaṃ;",
  "anya-e1209n:422_0": "84.",
  "anya-e1209n:423_0": "Lokattayesu sakalesu samaṃ na kiṃci",
  "anya-e1209n:424_0": "Lokassa santikaraṇaṃ ratanattayena,",
  "anya-e1209n:425_0": "Taṃtejasā sumahatā jitasabbapāpo",
  "anya-e1209n:426_0": "Sohaṃ sadādhigatasabbasukho bhaveyyaṃ;",
  "anya-e1209n:427_0": "85.",
  "anya-e1209n:428_0": "Lokattayesu sakalesu ca sabbasattā",
  "anya-e1209n:429_0": "Mittā ca majjharipubandhujanā ca sabbe,",
  "anya-e1209n:430_0": "Te sabbadā vigatarogabhayā visokā",
  "anya-e1209n:431_0": "Sabbaṃ sukhaṃ adhigatā muditā bhavantu;",
  "anya-e1209n:432_0": "86.",
  "anya-e1209n:433_0": "Kāyo karīsabharito viya bhinnakumbho",
  "anya-e1209n:434_0": "Kāyo sadā kalimalavyasanādhivāso,",
  "anya-e1209n:435_0": "Kāye vihaññati ca sabbasukhanti loko",
  "anya-e1209n:436_0": "Kāyo sadā maraṇarogajarādhivāso;",
  "anya-e1209n:437_0": "87.",
  "anya-e1209n:438_0": "So yobbanoti thaviroti ca bālakoti",
  "anya-e1209n:439_0": "Satte na pekkhati vihaññatireva maccu,",
  "anya-e1209n:440_0": "Sohaṃ ṭhitopi sayitopi ca pakkamanto",
  "anya-e1209n:441_0": "Gacchāmi maccuvadanaṃ niyataṃ tathā hi;",
  "anya-e1209n:442_0": "88.",
  "anya-e1209n:443_0": "Evaṃ yathā vihitadosamidaṃ sarīraṃ",
  "anya-e1209n:444_0": "Niccaṃva taggatamanā hadaye karotha,",
  "anya-e1209n:445_0": "Mettaṃ parittamasubhaṃ maraṇassatiñca",
  "anya-e1209n:446_0": "Bhāvetha bhāvanaratā satataṃ yatattā;",
  "anya-e1209n:447_0": "89.",
  "anya-e1209n:448_0": "Dānādi puññakiriyāni sukhudrayāni",
  "anya-e1209n:449_0": "Katvā ca tamphalamasesa mihappameyyaṃ,",
  "anya-e1209n:450_0": "Deyyaṃ sadā parahitāya sukhāya ceva",
  "anya-e1209n:451_0": "Kimbho tadeva nanu hatthagatañhi sāraṃ?",
  "anya-e1209n:452_0": "90.",
  "anya-e1209n:453_0": "Hetuṃ vinā na bhavatī hi ca kiṃci loke",
  "anya-e1209n:454_0": "Saddova pāṇitalaghaṭṭanahetujāto,",
  "anya-e1209n:455_0": "Evañca hetuphala bhāvavibhāgabhinno",
  "anya-e1209n:456_0": "Loko udeti ca vinassati tiṭṭhatī ca;",
  "anya-e1209n:457_0": "91.",
  "anya-e1209n:458_0": "Kammassa kāraṇāmayañhi yathā avijjā",
  "anya-e1209n:459_0": "Bho kammanā samadhigacchati jātibhedaṃ,",
  "anya-e1209n:460_0": "Jātiṃ paṭicca ca jarāmaraṇādidukkhaṃ",
  "anya-e1209n:461_0": "Sattā sadā paṭilabhanti anādikāle;",
  "anya-e1209n:462_0": "92.",
  "anya-e1209n:463_0": "Kammaṃ yathā na bhavatīha ca mohanāsā",
  "anya-e1209n:464_0": "Kammakkhayāpi ca na hoti bhavesu jāti,",
  "anya-e1209n:465_0": "Jātikkhayā iha jarāmaraṇādidukkhaṃ",
  "anya-e1209n:466_0": "Sabbakkhayo bhavati dīpevānilena;",
  "anya-e1209n:467_0": "93.",
  "anya-e1209n:468_0": "Yo passatīha satataṃ munidhammakāyaṃ",
  "anya-e1209n:469_0": "Buddhaṃ sa passati naro iti so avoca,",
  "anya-e1209n:470_0": "Buddhañca dhammamamalañca tilokanāthaṃ",
  "anya-e1209n:471_0": "Sampassituṃ vicinathā’pi ca dhammataṃ bho;",
  "anya-e1209n:472_0": "94.",
  "anya-e1209n:473_0": "Sallaṃva bho sunisitaṃ hadaye nimuggaṃ",
  "anya-e1209n:474_0": "Dosattayaṃ vividhapāpamalena littaṃ,",
  "anya-e1209n:475_0": "Nānāvidhabyasanabhājanamappasannaṃ",
  "anya-e1209n:476_0": "Paññāmayena balisena nirākarotha;",
  "anya-e1209n:477_0": "95.",
  "anya-e1209n:478_0": "Nākampayanti sakalāpi ca lokadhammā",
  "anya-e1209n:479_0": "Cittaṃ sadāpagatapāpakilesasallaṃ,",
  "anya-e1209n:480_0": "Rūpādayo ca vividhā visayā samaggā",
  "anya-e1209n:481_0": "Phuṭṭhaṃva merusikharaṃ mahatānilena;",
  "anya-e1209n:482_0": "96.",
  "anya-e1209n:483_0": "Saṃsāradukkhamagaṇeyya yathā munindo",
  "anya-e1209n:484_0": "Gambhirapāramita sāgaramuttaritvā,",
  "anya-e1209n:485_0": "Ñeyyaṃ abodhi nipuṇaṃ hatamohajālo",
  "anya-e1209n:486_0": "Tasmā sadā parahitaṃ paramaṃ ciṇātha;",
  "anya-e1209n:487_0": "97.",
  "anya-e1209n:488_0": "Ohāya so’dhigatamokkhasukhaṃ paresaṃ",
  "anya-e1209n:489_0": "Atthāya saṃcari bhavesu mahabbhayesu,",
  "anya-e1209n:490_0": "Evaṃ sadā parahitaṃ purato karitvā",
  "anya-e1209n:491_0": "Dhammo mayānucarito jagadatthameva;",
  "anya-e1209n:492_0": "98.",
  "anya-e1209n:493_0": "Laddhāna dullabhatarañca manussayoniṃ",
  "anya-e1209n:494_0": "Sabbaṃ papañcarahitaṃ khaṇasampadañca,",
  "anya-e1209n:495_0": "Ñatvāna āsavanudekahitañca dhammaṃ",
  "anya-e1209n:496_0": "Ko paññavā anavaraṃ na bhajeyya dhammaṃ?",
  "anya-e1209n:497_0": "99.",
  "anya-e1209n:498_0": "Laddhāna buddhasamayaṃ atidullabhaṃca",
  "anya-e1209n:499_0": "Saddhamma maggamasamaṃ sivadaṃ tatheva,",
  "anya-e1209n:500_0": "Kalyāṇamittapavare matisampadañca",
  "anya-e1209n:501_0": "Ko buddhimā anavaraṃ na bhajeyya dhammaṃ?",
  "anya-e1209n:502_0": "100.",
  "anya-e1209n:503_0": "Evampi dullabhataraṃ vibhave suladdhā",
  "anya-e1209n:504_0": "Maccheradosa viratā ubhayatthakāmā,",
  "anya-e1209n:505_0": "Saddhādidhammasahitā satatappamattā",
  "anya-e1209n:506_0": "Bho! Bho! Karotha amatādhigamāya puññaṃ;"
}