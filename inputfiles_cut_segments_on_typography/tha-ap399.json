{
  "tha-ap399:0.1_0": "Therāpadāna",
  "tha-ap399:0.2_0": "Pilindavacchavagga",
  "tha-ap399:0.3_0": "7. Girimānandattheraapadāna",
  "tha-ap399:1.1_0": "“Bhariyā me kālaṅkatā,",
  "tha-ap399:1.2_0": "putto sīvathikaṁ gato;",
  "tha-ap399:1.3_0": "Mātā pitā matā bhātā,",
  "tha-ap399:1.4_0": "ekacitamhi ḍayhare.",
  "tha-ap399:2.1_0": "Tena sokena santatto,",
  "tha-ap399:2.2_0": "kiso paṇḍu ahosahaṁ;",
  "tha-ap399:2.3_0": "Cittakkhepo ca me āsi,",
  "tha-ap399:2.4_0": "tena sokena aṭṭito.",
  "tha-ap399:3.1_0": "Sokasallaparetohaṁ,",
  "tha-ap399:3.2_0": "vanantamupasaṅkamiṁ;",
  "tha-ap399:3.3_0": "Pavattaphalaṁ bhuñjitvā,",
  "tha-ap399:3.4_0": "rukkhamūle vasāmahaṁ.",
  "tha-ap399:4.1_0": "Sumedho nāma sambuddho,",
  "tha-ap399:4.2_0": "dukkhassantakaro jino;",
  "tha-ap399:4.3_0": "Mamuddharitukāmo so,",
  "tha-ap399:4.4_0": "āgañchi mama santikaṁ.",
  "tha-ap399:5.1_0": "Padasaddaṁ suṇitvāna,",
  "tha-ap399:5.2_0": "sumedhassa mahesino;",
  "tha-ap399:5.3_0": "Paggahetvānahaṁ sīsaṁ,",
  "tha-ap399:5.4_0": "ullokesiṁ mahāmuniṁ.",
  "tha-ap399:6.1_0": "Upāgate mahāvīre,",
  "tha-ap399:6.2_0": "pīti me udapajjatha;",
  "tha-ap399:6.3_0": "Tadāsimekaggamano,",
  "tha-ap399:6.4_0": "disvā taṁ lokanāyakaṁ.",
  "tha-ap399:7.1_0": "Satiṁ paṭilabhitvāna,",
  "tha-ap399:7.2_0": "paṇṇamuṭṭhimadāsahaṁ;",
  "tha-ap399:7.3_0": "Nisīdi bhagavā tattha,",
  "tha-ap399:7.4_0": "anukampāya cakkhumā.",
  "tha-ap399:8.1_0": "Nisajja tattha bhagavā,",
  "tha-ap399:8.2_0": "sumedho lokanāyako;",
  "tha-ap399:8.3_0": "Dhammaṁ me kathayī buddho,",
  "tha-ap399:8.4_0": "sokasallavinodanaṁ.",
  "tha-ap399:9.1_0": "‘Anavhitā tato āguṁ,",
  "tha-ap399:9.2_0": "ananuññātā ito gatā;",
  "tha-ap399:9.3_0": "Yathāgatā tathā gatā,",
  "tha-ap399:9.4_0": "tattha kā paridevanā.",
  "tha-ap399:10.1_0": "Yathāpi pathikā sattā,",
  "tha-ap399:10.2_0": "vassamānāya vuṭṭhiyā;",
  "tha-ap399:10.3_0": "Sabhaṇḍā upagacchanti,",
  "tha-ap399:10.4_0": "vassassāpatanāya te.",
  "tha-ap399:11.1_0": "Vasse ca te oramite,",
  "tha-ap399:11.2_0": "sampayanti yadicchakaṁ;",
  "tha-ap399:11.3_0": "Evaṁ mātā pitā tuyhaṁ,",
  "tha-ap399:11.4_0": "tattha kā paridevanā.",
  "tha-ap399:12.1_0": "Āgantukā pāhunakā,",
  "tha-ap399:12.2_0": "caliteritakampitā;",
  "tha-ap399:12.3_0": "Evaṁ mātā pitā tuyhaṁ,",
  "tha-ap399:12.4_0": "tattha kā paridevanā.",
  "tha-ap399:13.1_0": "Yathāpi urago jiṇṇaṁ,",
  "tha-ap399:13.2_0": "hitvā gacchati saṁ tacaṁ;",
  "tha-ap399:13.3_0": "Evaṁ mātā pitā tuyhaṁ,",
  "tha-ap399:13.4_0": "saṁ tanuṁ idha hīyare’.",
  "tha-ap399:14.1_0": "Buddhassa giramaññāya,",
  "tha-ap399:14.2_0": "sokasallaṁ vivajjayiṁ;",
  "tha-ap399:14.3_0": "Pāmojjaṁ janayitvāna,",
  "tha-ap399:14.4_0": "buddhaseṭṭhaṁ avandahaṁ.",
  "tha-ap399:15.1_0": "Vanditvāna mahānāgaṁ,",
  "tha-ap399:15.2_0": "Pūjayiṁ girimañjariṁ;",
  "tha-ap399:15.3_0": "Dibbagandhaṁ sampavantaṁ,",
  "tha-ap399:15.4_0": "Sumedhaṁ lokanāyakaṁ.",
  "tha-ap399:16.1_0": "Pūjayitvāna sambuddhaṁ,",
  "tha-ap399:16.2_0": "sire katvāna añjaliṁ;",
  "tha-ap399:16.3_0": "Anussaraṁ guṇaggāni,",
  "tha-ap399:16.4_0": "santhaviṁ lokanāyakaṁ.",
  "tha-ap399:17.1_0": "‘Nittiṇṇosi mahāvīra,",
  "tha-ap399:17.2_0": "sabbaññu lokanāyaka;",
  "tha-ap399:17.3_0": "Sabbe satte uddharasi,",
  "tha-ap399:17.4_0": "ñāṇena tvaṁ mahāmune.",
  "tha-ap399:18.1_0": "Vimatiṁ dveḷhakaṁ vāpi,",
  "tha-ap399:18.2_0": "sañchindasi mahāmune;",
  "tha-ap399:18.3_0": "Paṭipādesi me maggaṁ,",
  "tha-ap399:18.4_0": "tava ñāṇena cakkhuma.",
  "tha-ap399:19.1_0": "Arahā vasipattā ca,",
  "tha-ap399:19.2_0": "chaḷabhiññā mahiddhikā;",
  "tha-ap399:19.3_0": "Antalikkhacarā dhīrā,",
  "tha-ap399:19.4_0": "parivārenti tāvade.",
  "tha-ap399:20.1_0": "Paṭipannā ca sekhā ca,",
  "tha-ap399:20.2_0": "phalaṭṭhā santi sāvakā;",
  "tha-ap399:20.3_0": "Sūrodayeva padumā,",
  "tha-ap399:20.4_0": "pupphanti tava sāvakā.",
  "tha-ap399:21.1_0": "Mahāsamuddovakkhobho,",
  "tha-ap399:21.2_0": "atulopi duruttaro;",
  "tha-ap399:21.3_0": "Evaṁ ñāṇena sampanno,",
  "tha-ap399:21.4_0": "appameyyosi cakkhuma’.",
  "tha-ap399:22.1_0": "Vanditvāhaṁ lokajinaṁ,",
  "tha-ap399:22.2_0": "cakkhumantaṁ mahāyasaṁ;",
  "tha-ap399:22.3_0": "Puthu disā namassanto,",
  "tha-ap399:22.4_0": "paṭikuṭiko agañchahaṁ.",
  "tha-ap399:23.1_0": "Devalokā cavitvāna,",
  "tha-ap399:23.2_0": "sampajāno patissato;",
  "tha-ap399:23.3_0": "Okkamiṁ mātuyā kucchiṁ,",
  "tha-ap399:23.4_0": "sandhāvanto bhavābhave.",
  "tha-ap399:24.1_0": "Agārā abhinikkhamma,",
  "tha-ap399:24.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap399:24.3_0": "Ātāpī nipako jhāyī,",
  "tha-ap399:24.4_0": "paṭisallānagocaro.",
  "tha-ap399:25.1_0": "Padhānaṁ padahitvāna,",
  "tha-ap399:25.2_0": "tosayitvā mahāmuniṁ;",
  "tha-ap399:25.3_0": "Candovabbhaghanā mutto,",
  "tha-ap399:25.4_0": "vicarāmi ahaṁ sadā.",
  "tha-ap399:26.1_0": "Vivekamanuyuttomhi,",
  "tha-ap399:26.2_0": "upasanto nirūpadhi;",
  "tha-ap399:26.3_0": "Sabbāsave pariññāya,",
  "tha-ap399:26.4_0": "viharāmi anāsavo.",
  "tha-ap399:27.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap399:27.2_0": "yaṁ buddhamabhipūjayiṁ;",
  "tha-ap399:27.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap399:27.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap399:28.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap399:28.2_0": "bhavā sabbe samūhatā;",
  "tha-ap399:28.3_0": "Sabbāsavā parikkhīṇā,",
  "tha-ap399:28.4_0": "natthi dāni punabbhavo.",
  "tha-ap399:29.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap399:29.2_0": "…pe…",
  "tha-ap399:29.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap399:30.1_0": "Paṭisambhidā catasso,",
  "tha-ap399:30.2_0": "…pe…",
  "tha-ap399:30.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap399:31.1_0": "Itthaṁ sudaṁ āyasmā girimānando thero imā gāthāyo abhāsitthāti.",
  "tha-ap399:32.1_0": "Girimānandattherassāpadānaṁ sattamaṁ."
}