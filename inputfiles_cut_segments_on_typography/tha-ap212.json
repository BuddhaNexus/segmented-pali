{
  "tha-ap212:0.1_0": "Therāpadāna",
  "tha-ap212:0.2_0": "Kaṇikārapupphiyavagga",
  "tha-ap212:0.3_0": "10 Pāpanivāriyattheraapadāna",
  "tha-ap212:1.1_0": "“Tissassa tu bhagavato,",
  "tha-ap212:1.2_0": "devadevassa tādino;",
  "tha-ap212:1.3_0": "Ekacchattaṁ mayā dinnaṁ,",
  "tha-ap212:1.4_0": "vippasannena cetasā.",
  "tha-ap212:2.1_0": "Nivutaṁ hoti me pāpaṁ,",
  "tha-ap212:2.2_0": "kusalassupasampadā;",
  "tha-ap212:2.3_0": "Ākāse chattaṁ dhārenti,",
  "tha-ap212:2.4_0": "pubbakammassidaṁ phalaṁ.",
  "tha-ap212:3.1_0": "Carimaṁ vattate mayhaṁ,",
  "tha-ap212:3.2_0": "bhavā sabbe samūhatā;",
  "tha-ap212:3.3_0": "Dhāremi antimaṁ dehaṁ,",
  "tha-ap212:3.4_0": "sammāsambuddhasāsane.",
  "tha-ap212:4.1_0": "Dvenavute ito kappe,",
  "tha-ap212:4.2_0": "yaṁ chattamadadiṁ tadā;",
  "tha-ap212:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap212:4.4_0": "chattadānassidaṁ phalaṁ.",
  "tha-ap212:5.1_0": "Dvesattatimhito kappe,",
  "tha-ap212:5.2_0": "aṭṭhāsiṁsu janādhipā;",
  "tha-ap212:5.3_0": "Mahānidānanāmena,",
  "tha-ap212:5.4_0": "rājāno cakkavattino.",
  "tha-ap212:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap212:6.2_0": "…pe…",
  "tha-ap212:6.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap212:7.1_0": "Itthaṁ sudaṁ āyasmā pāpanivāriyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap212:8.1_0": "Pāpanivāriyattherassāpadānaṁ dasamaṁ.",
  "tha-ap212:9.1_0": "Kaṇikārapupphiyavaggo ekavīsatimo.",
  "tha-ap212:10.1_0": "Tassuddānaṁ",
  "tha-ap212:11.1_0": "Kaṇikāro minelañca,",
  "tha-ap212:11.2_0": "kiṅkaṇi taraṇena ca;",
  "tha-ap212:11.3_0": "Nigguṇḍipupphī dakado,",
  "tha-ap212:11.4_0": "salalo ca kuraṇḍako;",
  "tha-ap212:11.5_0": "Ādhārako pāpavārī,",
  "tha-ap212:11.6_0": "aṭṭhatālīsa gāthakāti."
}