{
  "tha-ap26:0.1_0": "Therāpadāna",
  "tha-ap26:0.2_0": "Subhūtivagga",
  "tha-ap26:0.3_0": "4. Pañcasīlasamādāniyattheraapadāna",
  "tha-ap26:1.1_0": "“Nagare candavatiyā,",
  "tha-ap26:1.2_0": "bhatako āsahaṁ tadā;",
  "tha-ap26:1.3_0": "Parakammāyane yutto,",
  "tha-ap26:1.4_0": "pabbajjaṁ na labhāmahaṁ.",
  "tha-ap26:2.1_0": "Mahandhakārapihitā,",
  "tha-ap26:2.2_0": "tividhaggīhi ḍayhare;",
  "tha-ap26:2.3_0": "Kena nu kho upāyena,",
  "tha-ap26:2.4_0": "visaṁyutto bhave ahaṁ.",
  "tha-ap26:3.1_0": "Deyyadhammo ca me natthi,",
  "tha-ap26:3.2_0": "varāko bhatako ahaṁ;",
  "tha-ap26:3.3_0": "Yannūnāhaṁ pañcasīlaṁ,",
  "tha-ap26:3.4_0": "rakkheyyaṁ paripūrayaṁ.",
  "tha-ap26:4.1_0": "Anomadassissa munino,",
  "tha-ap26:4.2_0": "nisabho nāma sāvako;",
  "tha-ap26:4.3_0": "Tamahaṁ upasaṅkamma,",
  "tha-ap26:4.4_0": "pañcasikkhāpadaggahiṁ.",
  "tha-ap26:5.1_0": "Vassasatasahassāni,",
  "tha-ap26:5.2_0": "āyu vijjati tāvade;",
  "tha-ap26:5.3_0": "Tāvatā pañcasīlāni,",
  "tha-ap26:5.4_0": "paripuṇṇāni gopayiṁ.",
  "tha-ap26:6.1_0": "Maccukāle ca sampatte,",
  "tha-ap26:6.2_0": "devā assāsayanti maṁ;",
  "tha-ap26:6.3_0": "‘Ratho sahassayutto te,",
  "tha-ap26:6.4_0": "mārisāyaṁ upaṭṭhito’.",
  "tha-ap26:7.1_0": "Vattante carime citte,",
  "tha-ap26:7.2_0": "mama sīlaṁ anussariṁ;",
  "tha-ap26:7.3_0": "Tena kammena sukatena,",
  "tha-ap26:7.4_0": "tāvatiṁsaṁ agacchahaṁ.",
  "tha-ap26:8.1_0": "Tiṁsakkhattuñca devindo,",
  "tha-ap26:8.2_0": "devarajjamakārayiṁ;",
  "tha-ap26:8.3_0": "Dibbasukhaṁ anubhaviṁ,",
  "tha-ap26:8.4_0": "accharāhi purakkhato.",
  "tha-ap26:9.1_0": "Pañcasattatikkhattuñca,",
  "tha-ap26:9.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap26:9.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap26:9.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap26:10.1_0": "Devalokā cavitvāna,",
  "tha-ap26:10.2_0": "sukkamūlena codito;",
  "tha-ap26:10.3_0": "Pure vesāliyaṁ jāto,",
  "tha-ap26:10.4_0": "mahāsāle suaḍḍhake.",
  "tha-ap26:11.1_0": "Vassūpanāyike kāle,",
  "tha-ap26:11.2_0": "dippante jinasāsane;",
  "tha-ap26:11.3_0": "Mātā ca me pitā ceva,",
  "tha-ap26:11.4_0": "pañcasikkhāpadaggahuṁ.",
  "tha-ap26:12.1_0": "Saha sutvānahaṁ sīlaṁ,",
  "tha-ap26:12.2_0": "mama sīlaṁ anussariṁ;",
  "tha-ap26:12.3_0": "Ekāsane nisīditvā,",
  "tha-ap26:12.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap26:13.1_0": "<b>Jātiyā pañcavassena</b>,",
  "tha-ap26:13.2_0": "arahattamapāpuṇiṁ;",
  "tha-ap26:13.3_0": "Upasampādayi buddho,",
  "tha-ap26:13.4_0": "guṇamaññāya cakkhumā.",
  "tha-ap26:14.1_0": "Paripuṇṇāni gopetvā,",
  "tha-ap26:14.2_0": "pañcasikkhāpadānahaṁ;",
  "tha-ap26:14.3_0": "Aparimeyye ito kappe,",
  "tha-ap26:14.4_0": "vinipātaṁ na gacchahaṁ.",
  "tha-ap26:15.1_0": "Svāhaṁ yasamanubhaviṁ,",
  "tha-ap26:15.2_0": "tesaṁ sīlāna vāhasā;",
  "tha-ap26:15.3_0": "Kappakoṭimpi kittento,",
  "tha-ap26:15.4_0": "kittaye ekadesakaṁ.",
  "tha-ap26:16.1_0": "Pañca sīlāni gopetvā,",
  "tha-ap26:16.2_0": "tayo hetū labhāmahaṁ;",
  "tha-ap26:16.3_0": "Dīghāyuko mahābhogo,",
  "tha-ap26:16.4_0": "tikkhapañño bhavāmahaṁ.",
  "tha-ap26:17.1_0": "Saṅkittento ca sabbesaṁ,",
  "tha-ap26:17.2_0": "adhimattañca porisaṁ;",
  "tha-ap26:17.3_0": "Bhavābhave saṁsaritvā,",
  "tha-ap26:17.4_0": "ete ṭhāne labhāmahaṁ.",
  "tha-ap26:18.1_0": "Aparimeyyasīlesu,",
  "tha-ap26:18.2_0": "vattantā jinasāvakā;",
  "tha-ap26:18.3_0": "Bhavesu yadi rajjeyyuṁ,",
  "tha-ap26:18.4_0": "vipāko kīdiso bhave.",
  "tha-ap26:19.1_0": "Suciṇṇaṁ me pañcasīlaṁ,",
  "tha-ap26:19.2_0": "bhatakena tapassinā;",
  "tha-ap26:19.3_0": "Tena sīlenahaṁ ajja,",
  "tha-ap26:19.4_0": "mocayiṁ sabbabandhanā.",
  "tha-ap26:20.1_0": "Aparimeyye ito kappe,",
  "tha-ap26:20.2_0": "pañca sīlāni gopayiṁ;",
  "tha-ap26:20.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap26:20.4_0": "pañcasīlānidaṁ phalaṁ.",
  "tha-ap26:21.1_0": "Paṭisambhidā catasso,",
  "tha-ap26:21.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap26:21.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap26:21.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap26:22.1_0": "Itthaṁ sudaṁ āyasmā pañcasīlasamādāniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap26:23.1_0": "Pañcasīlasamādāniyattherassāpadānaṁ catutthaṁ."
}