{
  "pv26:0.1_0": "Petavatthu",
  "pv26:0.2_0": "Cūḷavagga",
  "pv26:0.3_0": "1. Abhijjamānapetavatthu",
  "pv26:1.1_0": "“Abhijjamāne vārimhi,",
  "pv26:1.2_0": "gaṅgāya idha gacchasi;",
  "pv26:1.3_0": "Naggo pubbaddhapetova,",
  "pv26:1.4_0": "māladhārī alaṅkato;",
  "pv26:1.5_0": "Kuhiṁ gamissasi peta,",
  "pv26:1.6_0": "kattha vāso bhavissatī”ti.",
  "pv26:2.1_0": "“Cundaṭṭhilaṁ gamissāmi,",
  "pv26:2.2_0": "peto so iti bhāsati;",
  "pv26:2.3_0": "Antare vāsabhagāmaṁ,",
  "pv26:2.4_0": "bārāṇasiṁ ca santike”.",
  "pv26:3.1_0": "Tañca disvā mahāmatto,",
  "pv26:3.2_0": "koliyo iti vissuto;",
  "pv26:3.3_0": "Sattuṁ bhattañca petassa,",
  "pv26:3.4_0": "pītakañca yugaṁ adā.",
  "pv26:4.1_0": "Nāvāya tiṭṭhamānāya,",
  "pv26:4.2_0": "kappakassa adāpayi;",
  "pv26:4.3_0": "Kappakassa padinnamhi,",
  "pv26:4.4_0": "ṭhāne petassa dissatha.",
  "pv26:5.1_0": "Tato suvatthavasano,",
  "pv26:5.2_0": "māladhārī alaṅkato;",
  "pv26:5.3_0": "Ṭhāne ṭhitassa petassa,",
  "pv26:5.4_0": "dakkhiṇā upakappatha;",
  "pv26:5.5_0": "Tasmā dajjetha petānaṁ,",
  "pv26:5.6_0": "anukampāya punappunaṁ.",
  "pv26:6.1_0": "Sātunnavasanā eke,",
  "pv26:6.2_0": "aññe kesanivāsanā;",
  "pv26:6.3_0": "Petā bhattāya gacchanti,",
  "pv26:6.4_0": "pakkamanti disodisaṁ.",
  "pv26:7.1_0": "Dūre eke padhāvitvā,",
  "pv26:7.2_0": "aladdhāva nivattare;",
  "pv26:7.3_0": "Chātā pamucchitā bhantā,",
  "pv26:7.4_0": "bhūmiyaṁ paṭisumbhitā.",
  "pv26:8.1_0": "Te ca tattha papatitā,",
  "pv26:8.2_0": "bhūmiyaṁ paṭisumbhitā;",
  "pv26:8.3_0": "Pubbe akatakalyāṇā,",
  "pv26:8.4_0": "aggidaḍḍhāva ātape.",
  "pv26:9.1_0": "“Mayaṁ pubbe pāpadhammā,",
  "pv26:9.2_0": "gharaṇī kulamātaro;",
  "pv26:9.3_0": "Santesu deyyadhammesu,",
  "pv26:9.4_0": "dīpaṁ nākamha attano.",
  "pv26:10.1_0": "Pahūtaṁ annapānampi,",
  "pv26:10.2_0": "apissu avakirīyati;",
  "pv26:10.3_0": "Sammaggate pabbajite,",
  "pv26:10.4_0": "na ca kiñci adamhase.",
  "pv26:11.1_0": "Akammakāmā alasā,",
  "pv26:11.2_0": "Sādukāmā mahagghasā;",
  "pv26:11.3_0": "Ālopapiṇḍadātāro,",
  "pv26:11.4_0": "Paṭiggahe paribhāsimhase.",
  "pv26:12.1_0": "Te gharā tā ca dāsiyo,",
  "pv26:12.2_0": "tānevābharaṇāni no;",
  "pv26:12.3_0": "Te aññe paricārenti,",
  "pv26:12.4_0": "mayaṁ dukkhassa bhāgino.",
  "pv26:13.1_0": "Veṇī vā avaññā honti,",
  "pv26:13.2_0": "rathakārī ca dubbhikā;",
  "pv26:13.3_0": "Caṇḍālī kapaṇā honti,",
  "pv26:13.4_0": "kappakā ca punappunaṁ.",
  "pv26:14.1_0": "Yāni yāni nihīnāni,",
  "pv26:14.2_0": "kulāni kapaṇāni ca;",
  "pv26:14.3_0": "Tesu tesveva jāyanti,",
  "pv26:14.4_0": "esā maccharino gati.",
  "pv26:15.1_0": "Pubbe ca katakalyāṇā,",
  "pv26:15.2_0": "dāyakā vītamaccharā;",
  "pv26:15.3_0": "Saggaṁ te paripūrenti,",
  "pv26:15.4_0": "obhāsenti ca nandanaṁ.",
  "pv26:16.1_0": "Vejayante ca pāsāde,",
  "pv26:16.2_0": "ramitvā kāmakāmino;",
  "pv26:16.3_0": "Uccākulesu jāyanti,",
  "pv26:16.4_0": "sabhogesu tato cutā.",
  "pv26:17.1_0": "Kūṭāgāre ca pāsāde,",
  "pv26:17.2_0": "pallaṅke gonakatthate;",
  "pv26:17.3_0": "Bījitaṅgā morahatthehi,",
  "pv26:17.4_0": "kule jātā yasassino.",
  "pv26:18.1_0": "Aṅkato aṅkaṁ gacchanti,",
  "pv26:18.2_0": "māladhārī alaṅkatā;",
  "pv26:18.3_0": "Dhātiyo upatiṭṭhanti,",
  "pv26:18.4_0": "sāyaṁ pātaṁ sukhesino.",
  "pv26:19.1_0": "Nayidaṁ akatapuññānaṁ,",
  "pv26:19.2_0": "katapuññānamevidaṁ;",
  "pv26:19.3_0": "Asokaṁ nandanaṁ rammaṁ,",
  "pv26:19.4_0": "tidasānaṁ mahāvanaṁ.",
  "pv26:20.1_0": "Sukhaṁ akatapuññānaṁ,",
  "pv26:20.2_0": "idha natthi parattha ca;",
  "pv26:20.3_0": "Sukhañca katapuññānaṁ,",
  "pv26:20.4_0": "idha ceva parattha ca.",
  "pv26:21.1_0": "Tesaṁ sahabyakāmānaṁ,",
  "pv26:21.2_0": "kattabbaṁ kusalaṁ bahuṁ;",
  "pv26:21.3_0": "Katapuññā hi modanti,",
  "pv26:21.4_0": "sagge bhogasamaṅgino”ti.",
  "pv26:22.1_0": "Abhijjamānapetavatthu paṭhamaṁ."
}