{
  "anya-e0606n:0_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0606n:1_0": "Kamalāñjali",
  "anya-e0606n:2_0": "1.",
  "anya-e0606n:3_0": "Kamalāsana kamalāpati pamathādhipa vajirā,",
  "anya-e0606n:4_0": "Yudhadānava manujoraga bhujagāsana patinaṃ;",
  "anya-e0606n:5_0": "Makuṭāhita manidīdhiti bhamarāvali bhajitaṃ,",
  "anya-e0606n:6_0": "Paṇamā’mahaṃ anaghaṃ muni caraṇāmala kamalaṃ.",
  "anya-e0606n:7_0": "2.",
  "anya-e0606n:8_0": "Kamalālaya sadi’saṅkita kalamaṅgala ruciraṃ,",
  "anya-e0606n:9_0": "Jutirañjitaṃ abhinijjita subhakañcana nalinaṃ;",
  "anya-e0606n:10_0": "Janitā cira samaye nija pitu bhūpati namitaṃ,",
  "anya-e0606n:11_0": "Paṇamā’mahaṃ anaghaṃ muni caraṇāmala kamalaṃ.",
  "anya-e0606n:12_0": "3.",
  "anya-e0606n:13_0": "Saraṇāgata rajanīpati dinasekhara namitaṃ,",
  "anya-e0606n:14_0": "Bhajitākhila janapāvanaṃ abhikaṅkhita sukhadaṃ;",
  "anya-e0606n:15_0": "Vasudhātala sayamuggata sarasīruha mahitaṃ,",
  "anya-e0606n:16_0": "Paṇamā’mahaṃ anaghaṃ muni caraṇāmala kamalaṃ.",
  "anya-e0606n:17_0": "4.",
  "anya-e0606n:18_0": "Diradāsana tarupantika ghaṭitāsanaṃ abhayaṃ,",
  "anya-e0606n:19_0": "Vijayāsana samadhiṭṭhita caturaṅgika viriyaṃ;",
  "anya-e0606n:20_0": "Dharamānaka suriyehani vijitantaka dhajiniṃ,",
  "anya-e0606n:21_0": "Paṇamā’mahaṃ abhipātita namuciddhaja vibhavaṃ.",
  "anya-e0606n:22_0": "5.",
  "anya-e0606n:23_0": "Sadayodita piyabhārati vijitantaka samaraṃ,",
  "anya-e0606n:24_0": "Dasapārami balakampita sadharādhara dharaniṃ;",
  "anya-e0606n:25_0": "Girimekhala varavārana sirasānata caraṇaṃ,",
  "anya-e0606n:26_0": "Paṇamā’mahaṃ abhinandita sanarāmara bhuvanaṃ.",
  "anya-e0606n:27_0": "6.",
  "anya-e0606n:28_0": "Nikhilāsava vigame’nativimalīkata hadayaṃ,",
  "anya-e0606n:29_0": "Tadanantara viditākhila matigocara visayaṃ;",
  "anya-e0606n:30_0": "Visayīkata bhuvanattayaṃ atilokiya caritaṃ,",
  "anya-e0606n:31_0": "Paṇamā’mahaṃ aparājitaṃ arahaṃ muniṃ asamaṃ.",
  "anya-e0606n:32_0": "7.",
  "anya-e0606n:33_0": "Mudubhārati madhupāsita nalinopama vadanaṃ,",
  "anya-e0606n:34_0": "Rucirāyata nalinīdala nibha locana yugalaṃ;",
  "anya-e0606n:35_0": "Udayodita ravimaṇḍala jalitāmala niṭilaṃ,",
  "anya-e0606n:36_0": "Paṇamā’maha akutobhayaṃ anaghaṃ muni pamukhaṃ.",
  "anya-e0606n:37_0": "8.",
  "anya-e0606n:38_0": "Asitambuda rucikuñcita mudu kuntala lalitaṃ,",
  "anya-e0606n:39_0": "Bhuvanodara vitatāmita jutisañcaya jalitaṃ;",
  "anya-e0606n:40_0": "Madamodita diradopama gativibbhama ruciraṃ,",
  "anya-e0606n:41_0": "Paṇamā’mahaṃ amatandada munipuṅgavaṃ asamaṃ.",
  "anya-e0606n:42_0": "9.",
  "anya-e0606n:43_0": "Karuṇārasa paribhāvita savaṇāmata vacanaṃ,",
  "anya-e0606n:44_0": "Virudāvali sataghosita yasapūrita bhuvanaṃ;",
  "anya-e0606n:45_0": "Sumanohara varalakkhaṇa sirisañcaya sadanaṃ,",
  "anya-e0606n:46_0": "Paṇamā’mahaṃ uditāmala sasimaṇḍala vadanaṃ.",
  "anya-e0606n:47_0": "10.",
  "anya-e0606n:48_0": "Vinayāraha janamānasa kumudākara sasinaṃ,",
  "anya-e0606n:49_0": "Tasināpaga parisosana satadīdhiti tulitaṃ;",
  "anya-e0606n:50_0": "Tamanāsava munisevitaṃ apalokita sukhadaṃ,",
  "anya-e0606n:51_0": "Paṇamā’mahaṃ aniketanaṃ akhilāgati vigataṃ.",
  "anya-e0606n:52_0": "11.",
  "anya-e0606n:53_0": "Sahitākhila bhayabheravaṃ abhayāgata saranaṃ,",
  "anya-e0606n:54_0": "Ajarāmara sukhadāyakaṃ anirākata karuṇaṃ;",
  "anya-e0606n:55_0": "Tamupāsaka janasevita supatiṭṭhita caraṇaṃ,",
  "anya-e0606n:56_0": "Paṇamā’mahaṃ ahitāpahaṃ anaghuttama caraṇaṃ.",
  "anya-e0606n:57_0": "12.",
  "anya-e0606n:58_0": "Karuṇāmata rasapurita vīmalākhila hadayaṃ,",
  "anya-e0606n:59_0": "Vihitāmita janatāhitaṃ anukampita bhuvanaṃ;",
  "anya-e0606n:60_0": "Bhuvane sutaṃ avanīpati sata sevita caraṇaṃ,",
  "anya-e0606n:61_0": "Paṇamā’mahaṃ anaghaṃ muniṃ aghanāsana caturaṃ.",
  "anya-e0606n:62_0": "13.",
  "anya-e0606n:63_0": "Aratīrati paripīlita yatimānasa damanaṃ,",
  "anya-e0606n:64_0": "Nijasāsana vinivārita puthutitthiya samaṇaṃ;",
  "anya-e0606n:65_0": "Paravādika janatākata paribhāsita khamanaṃ,",
  "anya-e0606n:66_0": "Paṇamā’mahaṃ atidevata vara gotama samaṇaṃ.",
  "anya-e0606n:67_0": "14.",
  "anya-e0606n:68_0": "Saraṇāgata bhayanāsana vajirālaya paṇibhaṃ,",
  "anya-e0606n:69_0": "Bhavasāgara patitāmita janatārana nirataṃ;",
  "anya-e0606n:70_0": "Sirasāvahaṃ amalañjali puṭapaṅkaja makulaṃ,",
  "anya-e0606n:71_0": "Paṇamā’mahaṃ akhilalāya vigataṃ muniṃ atulaṃ.",
  "anya-e0606n:72_0": "15.",
  "anya-e0606n:73_0": "Vimalīkata janamānasa vigatāsava bhagavaṃ,",
  "anya-e0606n:74_0": "Bhavapāraga vibhavāmata sukhadāyaka satataṃ;",
  "anya-e0606n:75_0": "Paramādara garugārava vinataṃ jina payataṃ,",
  "anya-e0606n:76_0": "Padapaṅkaja rajasā mama samalaṅkuru sirasaṃ.",
  "anya-e0606n:77_0": "16.",
  "anya-e0606n:78_0": "Pavanāhata dumapallavaṃ iva nārata capalaṃ,",
  "anya-e0606n:79_0": "Bhavalālasa malinīkataṃ ajitindriya nivahaṃ;",
  "anya-e0606n:80_0": "Cira sañcita duritāhataṃ anivārita timisaṃ,",
  "anya-e0606n:81_0": "Vimalīkuru karuṇābhara sutaraṃ mama hadayaṃ.",
  "anya-e0606n:82_0": "17.",
  "anya-e0606n:83_0": "Adaye dayaṃ anaye nayaṃ api yo guṇaṃ aguṇe,",
  "anya-e0606n:84_0": "Ahite hitaṃ akaro kvacida api kenaci nakataṃ;",
  "anya-e0606n:85_0": "Sadaye jina sunaye guṇasadane tayi nitaraṃ,",
  "anya-e0606n:86_0": "Suhite hitacarite’nagha ramate mama hadayaṃ.",
  "anya-e0606n:87_0": "18.",
  "anya-e0606n:88_0": "Bhavasaṅkaṭa patitenapi bhavatā cira caritaṃ,",
  "anya-e0606n:89_0": "Visame sama caraṇaṃ khalu dasapārami bharaṇaṃ;",
  "anya-e0606n:90_0": "Sarato’hani sarato nisi supinenapi satataṃ,",
  "anya-e0606n:91_0": "Ramate jina sumate tvayi sadayaṃ mama hadayaṃ.",
  "anya-e0606n:92_0": "19.",
  "anya-e0606n:93_0": "Atiduddadaṃ adadī bhavaṃ atidukkaraṃ akarī;",
  "anya-e0606n:94_0": "Atidukkhamaṃ akhamī vata karuṇānidhi’rasamo,",
  "anya-e0606n:95_0": "Iti te guṇaṃ anaghaṃ muni sarato mama hadayaṃ,",
  "anya-e0606n:96_0": "Ramate’hani ramate nisi ramate tvayi satataṃ.",
  "anya-e0606n:97_0": "20.",
  "anya-e0606n:98_0": "Atiduccaraṃ acarī bhavaṃ atiduddamaṃ adamī,",
  "anya-e0606n:99_0": "Atiduddayaṃ adayī vata sadayāpara hadayo;",
  "anya-e0606n:100_0": "Iti te guṇaṃ anaghaṃ muni sarato mama hadayaṃ,",
  "anya-e0606n:101_0": "Ramate’hani ramate nisi ramate tvayi satataṃ.",
  "anya-e0606n:102_0": "21.",
  "anya-e0606n:103_0": "Atiduggamaṃ agamī bhavaṃ atidujjayaṃ ajayī,",
  "anya-e0606n:104_0": "Atidussahaṃ asahī vata samupekkhita manaso;",
  "anya-e0606n:105_0": "Iti te guṇaṃ anaghaṃ muni sarato mama hadayaṃ,",
  "anya-e0606n:106_0": "Ramate’hani ramate nisi ramate tvayi satataṃ.",
  "anya-e0606n:107_0": "22.",
  "anya-e0606n:108_0": "Atidāruna palayānala sadisānala jalite,",
  "anya-e0606n:109_0": "Niraye vinipatito ciraṃ aghatāpita manaso;",
  "anya-e0606n:110_0": "Na sariṃ sakida api te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:111_0": "Khama gotama narasārathi tamidaṃ mama khalitaṃ.",
  "anya-e0606n:112_0": "23.",
  "anya-e0606n:113_0": "Tiriyaggata-gatiyaṃ ciraṃ anavaṭṭhita carito,",
  "anya-e0606n:114_0": "Atiniṭṭhura vadhatajjita bhayakampita hadayo;",
  "anya-e0606n:115_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:116_0": "Khama gotama purisuttama tamidaṃ mama khalitaṃ.",
  "anya-e0606n:117_0": "24.",
  "anya-e0606n:118_0": "Paridevana nirato ciraṃ atha pettiya visaye,",
  "anya-e0606n:119_0": "Sujighacchita supipāsita parisosita jaṭhare;",
  "anya-e0606n:120_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:121_0": "Khama gotama dipaduttama tamidaṃ mama khalitaṃ.",
  "anya-e0606n:122_0": "25.",
  "anya-e0606n:123_0": "Vivaso bhusaṃ aghadūsita manasāsura visaye,",
  "anya-e0606n:124_0": "Janito ghanatimire ciraṃ atidukkhita hadayo;",
  "anya-e0606n:125_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:126_0": "Khama gotama vasisattama tamidaṃ mama khalitaṃ.",
  "anya-e0606n:127_0": "26.",
  "anya-e0606n:128_0": "Manasā cira vihitaṃ saraṃ atikibbisa caritaṃ,",
  "anya-e0606n:129_0": "Samathenatha suvirājiya taṃ asaññitaṃ upago;",
  "anya-e0606n:130_0": "Na sariṃ sakida api te pita bhajituṃ pada nalinaṃ,",
  "anya-e0606n:131_0": "Khama gotama vasipuṅgava tamidaṃ mama khalitaṃ.",
  "anya-e0606n:132_0": "27.",
  "anya-e0606n:133_0": "Vijigucchiya duritaṃ nija vapusā kataṃ amitaṃ,",
  "anya-e0606n:134_0": "Tanu vajjitaṃ upago bhavaṃ iha bhāvita samatho;",
  "anya-e0606n:135_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:136_0": "Khama gotama yatikuñjara tamidaṃ mama khalitaṃ.",
  "anya-e0606n:137_0": "28.",
  "anya-e0606n:138_0": "Ratanattaya rahite bhusa bahulīkata durite,",
  "anya-e0606n:139_0": "Janito paravisaye budhajana nindiya carite;",
  "anya-e0606n:140_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:141_0": "Khama gotama karuṇānidhi tamidaṃ mama khalitaṃ.",
  "anya-e0606n:142_0": "29.",
  "anya-e0606n:143_0": "Janito yadi manujesupi vikalindriya nivaho,",
  "anya-e0606n:144_0": "Tanunā karacaraṇādihi vikate’niha dukhito;",
  "anya-e0606n:145_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:146_0": "Khama gotama matisāgara tamidaṃ mama khalitaṃ.",
  "anya-e0606n:147_0": "30.",
  "anya-e0606n:148_0": "Vidhināhita matibhāvana rahito tamapihito,",
  "anya-e0606n:149_0": "Visadesupi kusalādisu tathadassana vimukho;",
  "anya-e0606n:150_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:151_0": "Khama gotama narakesari tamidaṃ mama khalitaṃ.",
  "anya-e0606n:152_0": "31.",
  "anya-e0606n:153_0": "Sucirenapi bhuvi dullabhaṃ asamaṃ khaṇaṃ alabhaṃ,",
  "anya-e0606n:154_0": "Sanarāmara janatāhita sukhadaṃ muni jananaṃ;",
  "anya-e0606n:155_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:156_0": "Khama gotama vadataṃvara tamidaṃ mama khalitaṃ.",
  "anya-e0606n:157_0": "32.",
  "anya-e0606n:158_0": "Nisitāyudha vadhasajjita khaḷaniddaya hadayo,",
  "anya-e0606n:159_0": "Parahiṃsana ruci bhiṃsana yamasodara sadiso;",
  "anya-e0606n:160_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:161_0": "Khama gotama munisattama tamidaṃ mama khalitaṃ.",
  "anya-e0606n:162_0": "33.",
  "anya-e0606n:163_0": "Parasantaka haraṇe katamati bañcana bahulo,",
  "anya-e0606n:164_0": "Gharasandhika paripanthika sahasākati nirato;",
  "anya-e0606n:165_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:166_0": "Khama gotama munipuṅgava tamidaṃ mama khalitaṃ.",
  "anya-e0606n:167_0": "34.",
  "anya-e0606n:168_0": "Navayobbana madagabbita parimucchita hadayo,",
  "anya-e0606n:169_0": "Sucisajjana vijigucchiya paradārika nirato;",
  "anya-e0606n:170_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:171_0": "Khama gotama karuṇābhara tamidaṃ mama khalitaṃ.",
  "anya-e0606n:172_0": "35.",
  "anya-e0606n:173_0": "Madirāsavarata nāgarajana santata bhajito,",
  "anya-e0606n:174_0": "Garugārava hiridūrita tiriyaggata carito;",
  "anya-e0606n:175_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:176_0": "Khama gotama vihatāsava tamidaṃ mama khalitaṃ.",
  "anya-e0606n:177_0": "36.",
  "anya-e0606n:178_0": "Sapitāmaha papitāmaha nicitaṃ dhanaṃ amitaṃ,",
  "anya-e0606n:179_0": "Pitusañcitamapi nāsiya kitavo hatavibhavo;",
  "anya-e0606n:180_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:181_0": "Khama gotama vijitantaka tamidaṃ mama khalitaṃ.",
  "anya-e0606n:182_0": "37.",
  "anya-e0606n:183_0": "Vitathālika vacano parapiyasuññata karaṇo,",
  "anya-e0606n:184_0": "Pharusaṃ bhaṇaṃ atinipphala bahubhāsana nipuṇo;",
  "anya-e0606n:185_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:186_0": "Khama gotama bhuvanesuta tamidaṃ mama khalitaṃ.",
  "anya-e0606n:187_0": "38.",
  "anya-e0606n:188_0": "Parasampadaṃ abhijhāyana nirantara dukhito,",
  "anya-e0606n:189_0": "Nabhirajjhana paramo kvaci phaladassana rahito;",
  "anya-e0606n:190_0": "Na sariṃ sakidapi te pita bhajituṃ padanalinaṃ,",
  "anya-e0606n:191_0": "Khama gotama guṇasāgara tamidaṃ mama khalitaṃ.",
  "anya-e0606n:192_0": "39.",
  "anya-e0606n:193_0": "Bhavato bhavaṃ aparāparaṃ ayatāciraṃ iti me,",
  "anya-e0606n:194_0": "Vapusā atha vacasāpi ca manasā kataṃ amitaṃ;",
  "anya-e0606n:195_0": "Khama gotama duritāpaha duritaṃ bahuvihitaṃ,",
  "anya-e0606n:196_0": "Dada me sivapadaṃ accutaṃ amataṃ bhavavigataṃ.",
  "anya-e0606n:197_0": "40.",
  "anya-e0606n:198_0": "Timirāvuta kuṇapākula vijigucchiya pavane,",
  "anya-e0606n:199_0": "Janikāsuci jaṭhare bahu kimisantati sadane;",
  "anya-e0606n:200_0": "Asayiṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:201_0": "Saranaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:202_0": "41.",
  "anya-e0606n:203_0": "Bahi nikkhamaṃ asakiṃ bhagatiriyaṃ patha patito,",
  "anya-e0606n:204_0": "Agadaṅkara kata sallaka satakhaṇḍita karaṇo;",
  "anya-e0606n:205_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:206_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi tarane.",
  "anya-e0606n:207_0": "42.",
  "anya-e0606n:208_0": "Patito bahi ratipillaka tanurāmaya mathito,",
  "anya-e0606n:209_0": "Vadituṃ kimu viditumpi ca na sahaṃ matirahito;",
  "anya-e0606n:210_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ apphṭisaraṇe,",
  "anya-e0606n:211_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:212_0": "43.",
  "anya-e0606n:213_0": "Janito yadi sukhito janadayito piyajanako,",
  "anya-e0606n:214_0": "Puthuko bahuvidha-kīlananirato gadagahito;",
  "anya-e0606n:215_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:216_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:217_0": "44.",
  "anya-e0606n:218_0": "Tarunopi hi gharabandhana gathitomita vibhavo,",
  "anya-e0606n:219_0": "Sahasā gadagahito piyabhariyāsuta viyuto;",
  "anya-e0606n:220_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:221_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:222_0": "45.",
  "anya-e0606n:223_0": "Ajaraṃ tanuṃ abhimaññiya navayobbana vasiko,",
  "anya-e0606n:224_0": "Jarasā parimathito paraṃ ananuṭṭhita kusalo;",
  "anya-e0606n:225_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:226_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:227_0": "46.",
  "anya-e0606n:228_0": "Nirujo dhuvaṃ arujaṃ tanuṃ abhimaññiya samado,",
  "anya-e0606n:229_0": "Kusalāsaya vimukho bhusaṃ avaso gadanihato;",
  "anya-e0606n:230_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:231_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:232_0": "47.",
  "anya-e0606n:233_0": "Pavicintiya sakajīvitaṃ amaraṃ dhuvaṃ anighaṃ,",
  "anya-e0606n:234_0": "Iti jīvitamadagabbita matirujjhita kusalo;",
  "anya-e0606n:235_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:236_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:237_0": "48.",
  "anya-e0606n:238_0": "Parahiṃsana dhanamosana paradārika nirato,",
  "anya-e0606n:239_0": "Dharanīpati gahito bahu vadhabandhana nihato;",
  "anya-e0606n:240_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:241_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:242_0": "49.",
  "anya-e0606n:243_0": "Narakodaka patito giritarumatthaka galito,",
  "anya-e0606n:244_0": "Migavāḷaka gahito visadhara jātihi ḍasito;",
  "anya-e0606n:245_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:246_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:247_0": "50.",
  "anya-e0606n:248_0": "Abhicāraka vidhikopita nisicāraka gahito,",
  "anya-e0606n:249_0": "Savisodana sahasādana pabhutīhi ca khalito;",
  "anya-e0606n:250_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:251_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:252_0": "51.",
  "anya-e0606n:253_0": "Sayamevaca sajanopari kupito mativiyuto,",
  "anya-e0606n:254_0": "Savisādana galakantana pabhutāmita khalito;",
  "anya-e0606n:255_0": "Amariṃ bhavagahaṇe caraṃ ahaṃ appaṭisaraṇe,",
  "anya-e0606n:256_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:257_0": "52.",
  "anya-e0606n:258_0": "Pitupūjana niratāsaya sukhito pitudayito,",
  "anya-e0606n:259_0": "Maraṇenaca pituno bhusaṃ anusocana nirato;",
  "anya-e0606n:260_0": "Parudiṃ ciraṃ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:261_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:262_0": "53.",
  "anya-e0606n:263_0": "Samupaṭṭhiya janikaṃ nijaṃ abhivādana paramo,",
  "anya-e0606n:264_0": "Maraṇenaca janikāyanusaritā guṇamahimaṃ;",
  "anya-e0606n:265_0": "Parudiṃ ciraṃ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:266_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:267_0": "54.",
  "anya-e0606n:268_0": "Gurudevata patimānana paramo piyasuvaco,",
  "anya-e0606n:269_0": "Samupāsitacaraṇo gurumaraṇenatidukhito;",
  "anya-e0606n:270_0": "Parudiṃ ciraṃ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:271_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:272_0": "55.",
  "anya-e0606n:273_0": "Gharamedhitaṃ upagomitavibhavo ratibahulo,",
  "anya-e0606n:274_0": "Maraṇe piyabhariyāsutaduhitū’natikaruṇaṃ;",
  "anya-e0606n:275_0": "Parudiṃ ciraṃ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:276_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:277_0": "56.",
  "anya-e0606n:278_0": "Piyapubbaja sahajānuja bhagiṇidvaya maraṇe,",
  "anya-e0606n:279_0": "Nija bandhava-sakha-sissaka maraṇe pyatikaruṇaṃ;",
  "anya-e0606n:280_0": "Parudiṃ ciraṃ atidussaha kasire bhavagahaṇe,",
  "anya-e0606n:281_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:282_0": "57.",
  "anya-e0606n:283_0": "Jagatīpati gahaṇā ripujanatakkara haraṇā,",
  "anya-e0606n:284_0": "Saritodaka vahaṇā puthujalitānala dahaṇā;",
  "anya-e0606n:285_0": "Parudiṃ hatavibhavo ciramiha duggatigahaṇe,",
  "anya-e0606n:286_0": "Saraṇaṃ bhava bhagavaṃ mama bhavanīradhi taraṇe.",
  "anya-e0606n:287_0": "58.",
  "anya-e0606n:288_0": "Atiduggama visamākula bhavasaṅkaṭa patite,",
  "anya-e0606n:289_0": "Byasanaṃ ciramiti dussahaṃ anubhūyapi vimitaṃ;",
  "anya-e0606n:290_0": "Na jahe sukhalavavañcitahadayo bhavatasinaṃ,",
  "anya-e0606n:291_0": "Tamapākuru karuṇānidhi tasinaṃ mama kasiṇaṃ.",
  "anya-e0606n:292_0": "59.",
  "anya-e0606n:293_0": "Jananāvadhi maraṇaṃ viya maraṇāvadhi jananaṃ,",
  "anya-e0606n:294_0": "Ubhayenapi bhayamevahi bhavato mama niyataṃ;",
  "anya-e0606n:295_0": "Sivamevaca jananāvadhi maraṇāvadhi rahitaṃ,",
  "anya-e0606n:296_0": "Dada me sivaṃ amatandada taṃ anāsava bhagavaṃ.",
  "anya-e0606n:297_0": "60.",
  "anya-e0606n:298_0": "Ciradikkhitamapi me manaṃ anivārita tasinaṃ,",
  "anya-e0606n:299_0": "Bhavato bhava ratipīlitaṃ ahaho kalighaṭitaṃ!",
  "anya-e0606n:300_0": "Tamato pita bhayato mamamava me bhava saraṇaṃ,",
  "anya-e0606n:301_0": "Bhagavaṃ paṭisaraṇaṃ mama bhavanīradhi taraṇaṃ."
}