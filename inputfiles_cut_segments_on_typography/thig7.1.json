{
  "thig7.1:0.1_0": "Therīgāthā 7.1",
  "thig7.1:0.2_0": "Sattakanipāta",
  "thig7.1:0.3_0": "Uttarātherīgāthā",
  "thig7.1:1.1_0": "“Musalāni gahetvāna,",
  "thig7.1:1.2_0": "dhaññaṁ koṭṭenti māṇavā;",
  "thig7.1:1.3_0": "Puttadārāni posentā,",
  "thig7.1:1.4_0": "dhanaṁ vindanti māṇavā.",
  "thig7.1:2.1_0": "Ghaṭetha buddhasāsane,",
  "thig7.1:2.2_0": "yaṁ katvā nānutappati;",
  "thig7.1:2.3_0": "Khippaṁ pādāni dhovitvā,",
  "thig7.1:2.4_0": "ekamantaṁ nisīdatha.",
  "thig7.1:3.1_0": "Cittaṁ upaṭṭhapetvāna,",
  "thig7.1:3.2_0": "ekaggaṁ susamāhitaṁ;",
  "thig7.1:3.3_0": "Paccavekkhatha saṅkhāre,",
  "thig7.1:3.4_0": "parato no ca attato”.",
  "thig7.1:4.1_0": "“Tassāhaṁ vacanaṁ sutvā,",
  "thig7.1:4.2_0": "paṭācārānusāsaniṁ;",
  "thig7.1:4.3_0": "Pāde pakkhālayitvāna,",
  "thig7.1:4.4_0": "ekamante upāvisiṁ.",
  "thig7.1:5.1_0": "Rattiyā purime yāme,",
  "thig7.1:5.2_0": "pubbajātimanussariṁ;",
  "thig7.1:5.3_0": "Rattiyā majjhime yāme,",
  "thig7.1:5.4_0": "dibbacakkhuṁ visodhayiṁ.",
  "thig7.1:6.1_0": "Rattiyā pacchime yāme,",
  "thig7.1:6.2_0": "tamokhandhaṁ padālayiṁ;",
  "thig7.1:6.3_0": "Tevijjā atha vuṭṭhāsiṁ,",
  "thig7.1:6.4_0": "katā te anusāsanī.",
  "thig7.1:7.1_0": "Sakkaṁva devā tidasā,",
  "thig7.1:7.2_0": "saṅgāme aparājitaṁ;",
  "thig7.1:7.3_0": "Purakkhatvā vihassāmi,",
  "thig7.1:7.4_0": "tevijjāmhi anāsavā”.",
  "thig7.1:8.1_0": "… Uttarā therī …."
}