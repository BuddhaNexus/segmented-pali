{
  "snp4.13:0.1_0": "Sutta Nipāta 4.13",
  "snp4.13:0.2_0": "Mahābyūhasutta",
  "snp4.13:1.1_0": "“Ye kecime diṭṭhiparibbasānā,",
  "snp4.13:1.2_0": "Idameva saccanti vivādayanti;",
  "snp4.13:1.3_0": "Sabbeva te nindamanvānayanti,",
  "snp4.13:1.4_0": "Atho pasaṁsampi labhanti tattha”.",
  "snp4.13:2.1_0": "“Appañhi etaṁ na alaṁ samāya,",
  "snp4.13:2.2_0": "Duve vivādassa phalāni brūmi;",
  "snp4.13:2.3_0": "Etampi disvā na vivādayetha,",
  "snp4.13:2.4_0": "Khemābhipassaṁ avivādabhūmiṁ”.",
  "snp4.13:3.1_0": "“Yā kācimā sammutiyo puthujjā,",
  "snp4.13:3.2_0": "Sabbāva etā na upeti vidvā;",
  "snp4.13:3.3_0": "Anūpayo so upayaṁ kimeyya,",
  "snp4.13:3.4_0": "Diṭṭhe sute khantimakubbamāno”.",
  "snp4.13:4.1_0": "“Sīluttamā saññamenāhu suddhiṁ,",
  "snp4.13:4.2_0": "Vataṁ samādāya upaṭṭhitāse;",
  "snp4.13:4.3_0": "Idheva sikkhema athassa suddhiṁ,",
  "snp4.13:4.4_0": "Bhavūpanītā kusalāvadānā.",
  "snp4.13:5.1_0": "Sace cuto sīlavatato hoti,",
  "snp4.13:5.2_0": "Pavedhatī kamma virādhayitvā;",
  "snp4.13:5.3_0": "Pajappatī patthayatī ca suddhiṁ,",
  "snp4.13:5.4_0": "Satthāva hīno pavasaṁ gharamhā.",
  "snp4.13:6.1_0": "Sīlabbataṁ vāpi pahāya sabbaṁ,",
  "snp4.13:6.2_0": "Kammañca sāvajjanavajjametaṁ;",
  "snp4.13:6.3_0": "Suddhiṁ asuddhinti apatthayāno,",
  "snp4.13:6.4_0": "Virato care santimanuggahāya.",
  "snp4.13:7.1_0": "Tamūpanissāya jigucchitaṁ vā,",
  "snp4.13:7.2_0": "Atha vāpi diṭṭhaṁ va sutaṁ mutaṁ vā;",
  "snp4.13:7.3_0": "Uddhaṁsarā suddhimanutthunanti,",
  "snp4.13:7.4_0": "Avītataṇhāse bhavābhavesu.",
  "snp4.13:8.1_0": "Patthayamānassa hi jappitāni,",
  "snp4.13:8.2_0": "Pavedhitaṁ vāpi pakappitesu;",
  "snp4.13:8.3_0": "Cutūpapāto idha yassa natthi,",
  "snp4.13:8.4_0": "Sa kena vedheyya kuhiṁ va jappe”.",
  "snp4.13:9.1_0": "“Yamāhu dhammaṁ paramanti eke,",
  "snp4.13:9.2_0": "Tameva hīnanti panāhu aññe;",
  "snp4.13:9.3_0": "Sacco nu vādo katamo imesaṁ,",
  "snp4.13:9.4_0": "Sabbeva hīme kusalāvadānā”.",
  "snp4.13:10.1_0": "“Sakañhi dhammaṁ paripuṇṇamāhu,",
  "snp4.13:10.2_0": "Aññassa dhammaṁ pana hīnamāhu;",
  "snp4.13:10.3_0": "Evampi viggayha vivādayanti,",
  "snp4.13:10.4_0": "Sakaṁ sakaṁ sammutimāhu saccaṁ.",
  "snp4.13:11.1_0": "Parassa ce vambhayitena hīno,",
  "snp4.13:11.2_0": "Na koci dhammesu visesi assa;",
  "snp4.13:11.3_0": "Puthū hi aññassa vadanti dhammaṁ,",
  "snp4.13:11.4_0": "Nihīnato samhi daḷhaṁ vadānā.",
  "snp4.13:12.1_0": "Saddhammapūjāpi nesaṁ tatheva,",
  "snp4.13:12.2_0": "Yathā pasaṁsanti sakāyanāni;",
  "snp4.13:12.3_0": "Sabbeva vādā tathiyā bhaveyyuṁ,",
  "snp4.13:12.4_0": "Suddhī hi nesaṁ paccattameva.",
  "snp4.13:13.1_0": "Na brāhmaṇassa paraneyyamatthi,",
  "snp4.13:13.2_0": "Dhammesu niccheyya samuggahītaṁ;",
  "snp4.13:13.3_0": "Tasmā vivādāni upātivatto,",
  "snp4.13:13.4_0": "Na hi seṭṭhato passati dhammamaññaṁ.",
  "snp4.13:14.1_0": "Jānāmi passāmi tatheva etaṁ,",
  "snp4.13:14.2_0": "Diṭṭhiyā eke paccenti suddhiṁ;",
  "snp4.13:14.3_0": "Addakkhi ce kiñhi tumassa tena,",
  "snp4.13:14.4_0": "Atisitvā aññena vadanti suddhiṁ.",
  "snp4.13:15.1_0": "Passaṁ naro dakkhati nāmarūpaṁ,",
  "snp4.13:15.2_0": "Disvāna vā ñassati tānimeva;",
  "snp4.13:15.3_0": "Kāmaṁ bahuṁ passatu appakaṁ vā,",
  "snp4.13:15.4_0": "Na hi tena suddhiṁ kusalā vadanti.",
  "snp4.13:16.1_0": "Nivissavādī na hi subbināyo,",
  "snp4.13:16.2_0": "Pakappitaṁ diṭṭhi purakkharāno;",
  "snp4.13:16.3_0": "Yaṁ nissito tattha subhaṁ vadāno,",
  "snp4.13:16.4_0": "Suddhiṁ vado tattha tathaddasā so.",
  "snp4.13:17.1_0": "Na brāhmaṇo kappamupeti saṅkhā,",
  "snp4.13:17.2_0": "Na diṭṭhisārī napi ñāṇabandhu;",
  "snp4.13:17.3_0": "Ñatvā ca so sammutiyo puthujjā,",
  "snp4.13:17.4_0": "Upekkhatī uggahaṇanti maññe.",
  "snp4.13:18.1_0": "Vissajja ganthāni munīdha loke,",
  "snp4.13:18.2_0": "Vivādajātesu na vaggasārī;",
  "snp4.13:18.3_0": "Santo asantesu upekkhako so,",
  "snp4.13:18.4_0": "Anuggaho uggahaṇanti maññe.",
  "snp4.13:19.1_0": "Pubbāsave hitvā nave akubbaṁ,",
  "snp4.13:19.2_0": "Na chandagū nopi nivissavādī;",
  "snp4.13:19.3_0": "Sa vippamutto diṭṭhigatehi dhīro,",
  "snp4.13:19.4_0": "Na lippati loke anattagarahī.",
  "snp4.13:20.1_0": "Sa sabbadhammesu visenibhūto,",
  "snp4.13:20.2_0": "Yaṁ kiñci diṭṭhaṁ va sutaṁ mutaṁ vā;",
  "snp4.13:20.3_0": "Sa pannabhāro muni vippamutto,",
  "snp4.13:20.4_0": "Na kappiyo nūparato na patthiyo”ti.",
  "snp4.13:20.5_0": "Mahābyūhasuttaṁ terasamaṁ."
}