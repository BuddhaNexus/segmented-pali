{
  "thag2.7:0.1_0": "Theragāthā 2.7",
  "thag2.7:0.2_0": "Dukanipāta",
  "thag2.7:0.3_0": "Paṭhamavagga",
  "thag2.7:0.4_0": "Rādhattheragāthā",
  "thag2.7:1.1_0": "“Yathā agāraṁ ducchannaṁ,",
  "thag2.7:1.2_0": "vuṭṭhī samativijjhati;",
  "thag2.7:1.3_0": "Evaṁ abhāvitaṁ cittaṁ,",
  "thag2.7:1.4_0": "rāgo samativijjhati.",
  "thag2.7:2.1_0": "Yathā agāraṁ succhannaṁ,",
  "thag2.7:2.2_0": "Vuṭṭhī na samativijjhati;",
  "thag2.7:2.3_0": "Evaṁ subhāvitaṁ cittaṁ,",
  "thag2.7:2.4_0": "Rāgo na samativijjhatī”ti.",
  "thag2.7:2.5_0": "… Rādho thero …."
}