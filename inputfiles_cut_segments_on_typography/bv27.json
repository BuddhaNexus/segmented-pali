{
  "bv27:0.1_0": "Buddhavaṁsa",
  "bv27:0.2_0": "27. Gotamabuddhavaṁsa",
  "bv27:1.1_0": "“Ahametarahi sambuddho,",
  "bv27:1.2_0": "gotamo sakyavaḍḍhano;",
  "bv27:1.3_0": "Padhānaṁ padahitvāna,",
  "bv27:1.4_0": "patto sambodhimuttamaṁ.",
  "bv27:2.1_0": "Brahmunā yācito santo,",
  "bv27:2.2_0": "dhammacakkaṁ pavattayiṁ;",
  "bv27:2.3_0": "Aṭṭhārasannaṁ koṭīnaṁ,",
  "bv27:2.4_0": "paṭhamābhisamayo ahu.",
  "bv27:3.1_0": "Tato parañca desente,",
  "bv27:3.2_0": "naradevasamāgame;",
  "bv27:3.3_0": "Gaṇanāya na vattabbo,",
  "bv27:3.4_0": "dutiyābhisamayo ahu.",
  "bv27:4.1_0": "Idhevāhaṁ etarahi,",
  "bv27:4.2_0": "ovadiṁ mama atrajaṁ;",
  "bv27:4.3_0": "Gaṇanāya na vattabbo,",
  "bv27:4.4_0": "tatiyābhisamayo ahu.",
  "bv27:5.1_0": "Ekosi sannipāto me,",
  "bv27:5.2_0": "sāvakānaṁ mahesinaṁ;",
  "bv27:5.3_0": "Aḍḍhateḷasasatānaṁ,",
  "bv27:5.4_0": "bhikkhūnāsi samāgamo.",
  "bv27:6.1_0": "Virocamāno vimalo,",
  "bv27:6.2_0": "bhikkhusaṅghassa majjhago;",
  "bv27:6.3_0": "Dadāmi patthitaṁ sabbaṁ,",
  "bv27:6.4_0": "maṇīva sabbakāmado.",
  "bv27:7.1_0": "Phalamākaṅkhamānānaṁ,",
  "bv27:7.2_0": "bhavacchandajahesinaṁ;",
  "bv27:7.3_0": "Catusaccaṁ pakāsemi,",
  "bv27:7.4_0": "anukampāya pāṇinaṁ.",
  "bv27:8.1_0": "Dasavīsasahassānaṁ,",
  "bv27:8.2_0": "dhammābhisamayo ahu;",
  "bv27:8.3_0": "Ekadvinnaṁ abhisamayo,",
  "bv27:8.4_0": "gaṇanāto asaṅkhiyo.",
  "bv27:9.1_0": "Vitthārikaṁ bāhujaññaṁ,",
  "bv27:9.2_0": "iddhaṁ phītaṁ suphullitaṁ;",
  "bv27:9.3_0": "Idha mayhaṁ sakyamunino,",
  "bv27:9.4_0": "sāsanaṁ suvisodhitaṁ.",
  "bv27:10.1_0": "Anāsavā vītarāgā,",
  "bv27:10.2_0": "santacittā samāhitā;",
  "bv27:10.3_0": "Bhikkhūnekasatā sabbe,",
  "bv27:10.4_0": "parivārenti maṁ sadā.",
  "bv27:11.1_0": "Idāni ye etarahi,",
  "bv27:11.2_0": "jahanti mānusaṁ bhavaṁ;",
  "bv27:11.3_0": "Appattamānasā sekhā,",
  "bv27:11.4_0": "te bhikkhū viññugarahitā.",
  "bv27:12.1_0": "Ariyañca santhomayantā,",
  "bv27:12.2_0": "sadā dhammaratā janā;",
  "bv27:12.3_0": "Bujjhissanti satimanto,",
  "bv27:12.4_0": "saṁsārasaritaṁ gatā.",
  "bv27:13.1_0": "Nagaraṁ kapilavatthu me,",
  "bv27:13.2_0": "rājā suddhodano pitā;",
  "bv27:13.3_0": "Mayhaṁ janettikā mātā,",
  "bv27:13.4_0": "māyādevīti vuccati.",
  "bv27:14.1_0": "Ekūnatiṁsavassāni,",
  "bv27:14.2_0": "agāraṁ ajjhahaṁ vasiṁ;",
  "bv27:14.3_0": "Rammo surammo subhako,",
  "bv27:14.4_0": "tayo pāsādamuttamā.",
  "bv27:15.1_0": "Cattārīsasahassāni,",
  "bv27:15.2_0": "nāriyo samalaṅkatā;",
  "bv27:15.3_0": "Bhaddakañcanā nāma nārī,",
  "bv27:15.4_0": "rāhulo nāma atrajo.",
  "bv27:16.1_0": "Nimitte caturo disvā,",
  "bv27:16.2_0": "assayānena nikkhamiṁ;",
  "bv27:16.3_0": "Chabbassaṁ padhānacāraṁ,",
  "bv27:16.4_0": "acariṁ dukkaraṁ ahaṁ.",
  "bv27:17.1_0": "Bārāṇasiyaṁ isipatane,",
  "bv27:17.2_0": "Cakkaṁ pavattitaṁ mayā;",
  "bv27:17.3_0": "Ahaṁ gotamasambuddho,",
  "bv27:17.4_0": "Saraṇaṁ sabbapāṇinaṁ.",
  "bv27:18.1_0": "Kolito upatisso ca,",
  "bv27:18.2_0": "dve bhikkhū aggasāvakā;",
  "bv27:18.3_0": "Ānando nāmupaṭṭhāko,",
  "bv27:18.4_0": "santikāvacaro mama;",
  "bv27:18.5_0": "Khemā uppalavaṇṇā ca,",
  "bv27:18.6_0": "bhikkhunī aggasāvikā.",
  "bv27:19.1_0": "Citto hatthāḷavako ca,",
  "bv27:19.2_0": "aggupaṭṭhākupāsakā;",
  "bv27:19.3_0": "Nandamātā ca uttarā,",
  "bv27:19.4_0": "aggupaṭṭhākupāsikā.",
  "bv27:20.1_0": "Ahaṁ assatthamūlamhi,",
  "bv27:20.2_0": "patto sambodhimuttamaṁ;",
  "bv27:20.3_0": "Byāmappabhā sadā mayhaṁ,",
  "bv27:20.4_0": "soḷasahatthamuggatā.",
  "bv27:21.1_0": "Appaṁ vassasataṁ āyu,",
  "bv27:21.2_0": "idānetarahi vijjati;",
  "bv27:21.3_0": "Tāvatā tiṭṭhamānohaṁ,",
  "bv27:21.4_0": "tāremi janataṁ bahuṁ.",
  "bv27:22.1_0": "Ṭhapayitvāna dhammukkaṁ,",
  "bv27:22.2_0": "pacchimaṁ janabodhanaṁ;",
  "bv27:22.3_0": "Ahampi nacirasseva,",
  "bv27:22.4_0": "saddhiṁ sāvakasaṅghato;",
  "bv27:22.5_0": "Idheva parinibbissaṁ,",
  "bv27:22.6_0": "aggīvāhārasaṅkhayā.",
  "bv27:23.1_0": "Tāni ca atulatejāni,",
  "bv27:23.2_0": "Imāni ca dasabalāni;",
  "bv27:23.3_0": "Ayañca guṇadhāraṇo deho,",
  "bv27:23.4_0": "Dvattiṁsavaralakkhaṇavicitto.",
  "bv27:24.1_0": "Dasa disā pabhāsetvā,",
  "bv27:24.2_0": "Sataraṁsīva chappabhā;",
  "bv27:24.3_0": "Sabbaṁ tamantarahissanti,",
  "bv27:24.4_0": "Nanu rittā sabbasaṅkhārā”ti.",
  "bv27:25.1_0": "Gotamassa bhagavato vaṁso pañcavīsatimo."
}