{
  "bv4:0.1_0": "Buddhavaṁsa",
  "bv4:0.2_0": "4. Koṇḍaññabuddhavaṁsa",
  "bv4:1.1_0": "“Dīpaṅkarassa aparena,",
  "bv4:1.2_0": "Koṇḍañño nāma nāyako;",
  "bv4:1.3_0": "Anantatejo amitayaso,",
  "bv4:1.4_0": "Appameyyo durāsado.",
  "bv4:2.1_0": "Dharaṇūpamo khamanena,",
  "bv4:2.2_0": "sīlena sāgarūpamo;",
  "bv4:2.3_0": "Samādhinā merūpamo,",
  "bv4:2.4_0": "ñāṇena gaganūpamo.",
  "bv4:3.1_0": "Indriyabalabojjhaṅga-",
  "bv4:3.2_0": "maggasaccappakāsanaṁ;",
  "bv4:3.3_0": "Pakāsesi sadā buddho,",
  "bv4:3.4_0": "hitāya sabbapāṇinaṁ.",
  "bv4:4.1_0": "Dhammacakkaṁ pavattente,",
  "bv4:4.2_0": "koṇḍaññe lokanāyake;",
  "bv4:4.3_0": "Koṭisatasahassānaṁ,",
  "bv4:4.4_0": "paṭhamābhisamayo ahu.",
  "bv4:5.1_0": "Tato parampi desente,",
  "bv4:5.2_0": "naramarūnaṁ samāgame;",
  "bv4:5.3_0": "Navutikoṭisahassānaṁ,",
  "bv4:5.4_0": "dutiyābhisamayo ahu.",
  "bv4:6.1_0": "Titthiye abhimaddanto,",
  "bv4:6.2_0": "yadā dhammamadesayi;",
  "bv4:6.3_0": "Asītikoṭisahassānaṁ,",
  "bv4:6.4_0": "tatiyābhisamayo ahu.",
  "bv4:7.1_0": "Sannipātā tayo āsuṁ,",
  "bv4:7.2_0": "koṇḍaññassa mahesino;",
  "bv4:7.3_0": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv4:7.4_0": "santacittāna tādinaṁ.",
  "bv4:8.1_0": "Koṭisatasahassānaṁ,",
  "bv4:8.2_0": "paṭhamo āsi samāgamo;",
  "bv4:8.3_0": "Dutiyo koṭisahassānaṁ,",
  "bv4:8.4_0": "tatiyo navutikoṭinaṁ.",
  "bv4:9.1_0": "Ahaṁ tena samayena,",
  "bv4:9.2_0": "vijitāvī nāma khattiyo;",
  "bv4:9.3_0": "Samuddaṁ antamantena,",
  "bv4:9.4_0": "issariyaṁ vattayāmahaṁ.",
  "bv4:10.1_0": "Koṭisatasahassānaṁ,",
  "bv4:10.2_0": "vimalānaṁ mahesinaṁ;",
  "bv4:10.3_0": "Saha lokagganāthena,",
  "bv4:10.4_0": "paramannena tappayiṁ.",
  "bv4:11.1_0": "Sopi maṁ buddho byākāsi,",
  "bv4:11.2_0": "koṇḍañño lokanāyako;",
  "bv4:11.3_0": "‘Aparimeyyito kappe,",
  "bv4:11.4_0": "buddho loke bhavissati.",
  "bv4:12.1_0": "Padhānaṁ padahitvāna,",
  "bv4:12.2_0": "katvā dukkarakārikaṁ;",
  "bv4:12.3_0": "Assatthamūle sambuddho,",
  "bv4:12.4_0": "bujjhissati mahāyaso.",
  "bv4:13.1_0": "Imassa janikā mātā,",
  "bv4:13.2_0": "māyā nāma bhavissati;",
  "bv4:13.3_0": "Pitā suddhodano nāma,",
  "bv4:13.4_0": "ayaṁ hessati gotamo.",
  "bv4:14.1_0": "Kolito upatisso ca,",
  "bv4:14.2_0": "aggā hessanti sāvakā;",
  "bv4:14.3_0": "Ānando nāmupaṭṭhāko,",
  "bv4:14.4_0": "upaṭṭhissatimaṁ jinaṁ.",
  "bv4:15.1_0": "Khemā uppalavaṇṇā ca,",
  "bv4:15.2_0": "aggā hessanti sāvikā;",
  "bv4:15.3_0": "Bodhi tassa bhagavato,",
  "bv4:15.4_0": "assatthoti pavuccati.",
  "bv4:16.1_0": "Citto ca hatthāḷavako,",
  "bv4:16.2_0": "aggā hessantupaṭṭhakā;",
  "bv4:16.3_0": "Nandamātā ca uttarā,",
  "bv4:16.4_0": "aggā hessantupaṭṭhikā;",
  "bv4:16.5_0": "Āyu vassasataṁ tassa,",
  "bv4:16.6_0": "gotamassa yasassino’.",
  "bv4:17.1_0": "Idaṁ sutvāna vacanaṁ,",
  "bv4:17.2_0": "asamassa mahesino;",
  "bv4:17.3_0": "Āmoditā naramarū,",
  "bv4:17.4_0": "‘buddhabījaṁ kira ayaṁ’.",
  "bv4:18.1_0": "Ukkuṭṭhisaddā vattanti,",
  "bv4:18.2_0": "apphoṭenti hasanti ca;",
  "bv4:18.3_0": "Katañjalī namassanti,",
  "bv4:18.4_0": "dasasahassidevatā.",
  "bv4:19.1_0": "‘Yadimassa lokanāthassa,",
  "bv4:19.2_0": "virajjhissāma sāsanaṁ;",
  "bv4:19.3_0": "Anāgatamhi addhāne,",
  "bv4:19.4_0": "hessāma sammukhā imaṁ.",
  "bv4:20.1_0": "Yathā manussā nadiṁ tarantā,",
  "bv4:20.2_0": "Paṭititthaṁ virajjhiya;",
  "bv4:20.3_0": "Heṭṭhātitthe gahetvāna,",
  "bv4:20.4_0": "Uttaranti mahānadiṁ.",
  "bv4:21.1_0": "Evamevaṁ mayaṁ sabbe,",
  "bv4:21.2_0": "yadi muñcāmimaṁ jinaṁ;",
  "bv4:21.3_0": "Anāgatamhi addhāne,",
  "bv4:21.4_0": "hessāma sammukhā imaṁ’.",
  "bv4:22.1_0": "Tassāhaṁ vacanaṁ sutvā,",
  "bv4:22.2_0": "bhiyyo cittaṁ pasādayiṁ;",
  "bv4:22.3_0": "Tameva atthaṁ sādhento,",
  "bv4:22.4_0": "mahārajjaṁ jine adaṁ;",
  "bv4:22.5_0": "Mahārajjaṁ daditvāna,",
  "bv4:22.6_0": "pabbajiṁ tassa santike.",
  "bv4:23.1_0": "Suttantaṁ vinayañcāpi,",
  "bv4:23.2_0": "navaṅgaṁ satthusāsanaṁ;",
  "bv4:23.3_0": "Sabbaṁ pariyāpuṇitvāna,",
  "bv4:23.4_0": "sobhayiṁ jinasāsanaṁ.",
  "bv4:24.1_0": "Tatthappamatto viharanto,",
  "bv4:24.2_0": "nisajjaṭṭhānacaṅkame;",
  "bv4:24.3_0": "Abhiññāpāramiṁ gantvā,",
  "bv4:24.4_0": "brahmalokamagañchahaṁ.",
  "bv4:25.1_0": "Nagaraṁ rammavatī nāma,",
  "bv4:25.2_0": "sunando nāma khattiyo;",
  "bv4:25.3_0": "Sujātā nāma janikā,",
  "bv4:25.4_0": "koṇḍaññassa mahesino.",
  "bv4:26.1_0": "Dasavassasahassāni,",
  "bv4:26.2_0": "agāraṁ ajjha so vasi;",
  "bv4:26.3_0": "Suci suruci subho ca,",
  "bv4:26.4_0": "tayo pāsādamuttamā.",
  "bv4:27.1_0": "Tīṇi satasahassāni,",
  "bv4:27.2_0": "nāriyo samalaṅkatā;",
  "bv4:27.3_0": "Rucidevī nāma nārī,",
  "bv4:27.4_0": "vijitaseno atrajo.",
  "bv4:28.1_0": "Nimitte caturo disvā,",
  "bv4:28.2_0": "rathayānena nikkhami;",
  "bv4:28.3_0": "Anūnadasamāsāni,",
  "bv4:28.4_0": "padhānaṁ padahī jino.",
  "bv4:29.1_0": "Brahmunā yācito santo,",
  "bv4:29.2_0": "koṇḍañño dvipaduttamo;",
  "bv4:29.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv4:29.4_0": "devānaṁ nagaruttame.",
  "bv4:30.1_0": "Bhaddo ceva subhaddo ca,",
  "bv4:30.2_0": "ahesuṁ aggasāvakā;",
  "bv4:30.3_0": "Anuruddho nāmupaṭṭhāko,",
  "bv4:30.4_0": "koṇḍaññassa mahesino.",
  "bv4:31.1_0": "Tissā ca upatissā ca,",
  "bv4:31.2_0": "ahesuṁ aggasāvikā;",
  "bv4:31.3_0": "Sālakalyāṇiko bodhi,",
  "bv4:31.4_0": "koṇḍaññassa mahesino.",
  "bv4:32.1_0": "Soṇo ca upasoṇo ca,",
  "bv4:32.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv4:32.3_0": "Nandā ceva sirīmā ca,",
  "bv4:32.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv4:33.1_0": "So aṭṭhāsīti hatthāni,",
  "bv4:33.2_0": "accuggato mahāmuni;",
  "bv4:33.3_0": "Sobhate uḷurājāva,",
  "bv4:33.4_0": "sūriyo majjhanhike yathā.",
  "bv4:34.1_0": "Vassasatasahassāni,",
  "bv4:34.2_0": "āyu vijjati tāvade;",
  "bv4:34.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv4:34.4_0": "tāresi janataṁ bahuṁ.",
  "bv4:35.1_0": "Khīṇāsavehi vimalehi,",
  "bv4:35.2_0": "vicittā āsi medanī;",
  "bv4:35.3_0": "Yathā gaganamuḷūhi,",
  "bv4:35.4_0": "evaṁ so upasobhatha.",
  "bv4:36.1_0": "Tepi nāgā appameyyā,",
  "bv4:36.2_0": "asaṅkhobbhā durāsadā;",
  "bv4:36.3_0": "Vijjupātaṁva dassetvā,",
  "bv4:36.4_0": "nibbutā te mahāyasā.",
  "bv4:37.1_0": "Sā ca atuliyā jinassa iddhi,",
  "bv4:37.2_0": "Ñāṇaparibhāvito ca samādhi;",
  "bv4:37.3_0": "Sabbaṁ tamantarahitaṁ,",
  "bv4:37.4_0": "Nanu rittā sabbasaṅkhārā.",
  "bv4:38.1_0": "Koṇḍañño pavaro buddho,",
  "bv4:38.2_0": "Candārāmamhi nibbuto;",
  "bv4:38.3_0": "Tattheva cetiyo citto,",
  "bv4:38.4_0": "Satta yojanamussito”ti.",
  "bv4:39.1_0": "Koṇḍaññassa bhagavato vaṁso dutiyo."
}