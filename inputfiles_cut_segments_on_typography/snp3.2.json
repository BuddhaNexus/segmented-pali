{
  "snp3.2:0.1_0": "Sutta Nipāta 3.2",
  "snp3.2:0.2_0": "Padhānasutta",
  "snp3.2:1.1_0": "“Taṁ maṁ padhānapahitattaṁ,",
  "snp3.2:1.2_0": "nadiṁ nerañjaraṁ pati;",
  "snp3.2:1.3_0": "Viparakkamma jhāyantaṁ,",
  "snp3.2:1.4_0": "yogakkhemassa pattiyā.",
  "snp3.2:2.1_0": "Namucī karuṇaṁ vācaṁ,",
  "snp3.2:2.2_0": "bhāsamāno upāgami;",
  "snp3.2:2.3_0": "‘Kiso tvamasi dubbaṇṇo,",
  "snp3.2:2.4_0": "santike maraṇaṁ tava.",
  "snp3.2:3.1_0": "Sahassabhāgo maraṇassa,",
  "snp3.2:3.2_0": "ekaṁso tava jīvitaṁ;",
  "snp3.2:3.3_0": "Jīva bho jīvitaṁ seyyo,",
  "snp3.2:3.4_0": "jīvaṁ puññāni kāhasi.",
  "snp3.2:4.1_0": "Carato ca te brahmacariyaṁ,",
  "snp3.2:4.2_0": "Aggihuttañca jūhato;",
  "snp3.2:4.3_0": "Pahūtaṁ cīyate puññaṁ,",
  "snp3.2:4.4_0": "Kiṁ padhānena kāhasi.",
  "snp3.2:5.1_0": "Duggo maggo padhānāya,",
  "snp3.2:5.2_0": "dukkaro durabhisambhavo’”;",
  "snp3.2:5.3_0": "Imā gāthā bhaṇaṁ māro,",
  "snp3.2:5.4_0": "aṭṭhā buddhassa santike.",
  "snp3.2:6.1_0": "Taṁ tathāvādinaṁ māraṁ,",
  "snp3.2:6.2_0": "bhagavā etadabravi;",
  "snp3.2:6.3_0": "“Pamattabandhu pāpima,",
  "snp3.2:6.4_0": "yenatthena idhāgato.",
  "snp3.2:7.1_0": "Aṇumattopi puññena,",
  "snp3.2:7.2_0": "Attho mayhaṁ na vijjati;",
  "snp3.2:7.3_0": "Yesañca attho puññena,",
  "snp3.2:7.4_0": "Te māro vattumarahati.",
  "snp3.2:8.1_0": "Atthi saddhā tathā viriyaṁ,",
  "snp3.2:8.2_0": "paññā ca mama vijjati;",
  "snp3.2:8.3_0": "Evaṁ maṁ pahitattampi,",
  "snp3.2:8.4_0": "kiṁ jīvamanupucchasi.",
  "snp3.2:9.1_0": "Nadīnamapi sotāni,",
  "snp3.2:9.2_0": "ayaṁ vāto visosaye;",
  "snp3.2:9.3_0": "Kiñca me pahitattassa,",
  "snp3.2:9.4_0": "lohitaṁ nupasussaye.",
  "snp3.2:10.1_0": "Lohite sussamānamhi,",
  "snp3.2:10.2_0": "Pittaṁ semhañca sussati;",
  "snp3.2:10.3_0": "Maṁsesu khīyamānesu,",
  "snp3.2:10.4_0": "Bhiyyo cittaṁ pasīdati;",
  "snp3.2:10.5_0": "Bhiyyo sati ca paññā ca,",
  "snp3.2:10.6_0": "Samādhi mama tiṭṭhati.",
  "snp3.2:11.1_0": "Tassa mevaṁ viharato,",
  "snp3.2:11.2_0": "Pattassuttamavedanaṁ;",
  "snp3.2:11.3_0": "Kāmesu nāpekkhate cittaṁ,",
  "snp3.2:11.4_0": "Passa sattassa suddhataṁ.",
  "snp3.2:12.1_0": "Kāmā te paṭhamā senā,",
  "snp3.2:12.2_0": "Dutiyā arati vuccati;",
  "snp3.2:12.3_0": "Tatiyā khuppipāsā te,",
  "snp3.2:12.4_0": "Catutthī taṇhā pavuccati.",
  "snp3.2:13.1_0": "Pañcamaṁ thinamiddhaṁ te,",
  "snp3.2:13.2_0": "Chaṭṭhā bhīrū pavuccati;",
  "snp3.2:13.3_0": "Sattamī vicikicchā te,",
  "snp3.2:13.4_0": "Makkho thambho te aṭṭhamo.",
  "snp3.2:14.1_0": "Lābho siloko sakkāro,",
  "snp3.2:14.2_0": "Micchāladdho ca yo yaso;",
  "snp3.2:14.3_0": "Yo cattānaṁ samukkaṁse,",
  "snp3.2:14.4_0": "Pare ca avajānati.",
  "snp3.2:15.1_0": "Esā namuci te senā,",
  "snp3.2:15.2_0": "Kaṇhassābhippahārinī;",
  "snp3.2:15.3_0": "Na naṁ asūro jināti,",
  "snp3.2:15.4_0": "Jetvā ca labhate sukhaṁ.",
  "snp3.2:16.1_0": "Esa muñjaṁ parihare,",
  "snp3.2:16.2_0": "Dhiratthu mama jīvitaṁ;",
  "snp3.2:16.3_0": "Saṅgāme me mataṁ seyyo,",
  "snp3.2:16.4_0": "Yañce jīve parājito.",
  "snp3.2:17.1_0": "Pagāḷhettha na dissanti,",
  "snp3.2:17.2_0": "Eke samaṇabrāhmaṇā;",
  "snp3.2:17.3_0": "Tañca maggaṁ na jānanti,",
  "snp3.2:17.4_0": "Yena gacchanti subbatā.",
  "snp3.2:18.1_0": "Samantā dhajiniṁ disvā,",
  "snp3.2:18.2_0": "Yuttaṁ māraṁ savāhanaṁ;",
  "snp3.2:18.3_0": "Yuddhāya paccuggacchāmi,",
  "snp3.2:18.4_0": "Mā maṁ ṭhānā acāvayi.",
  "snp3.2:19.1_0": "Yaṁ te taṁ nappasahati,",
  "snp3.2:19.2_0": "Senaṁ loko sadevako;",
  "snp3.2:19.3_0": "Taṁ te paññāya bhecchāmi,",
  "snp3.2:19.4_0": "Āmaṁ pattaṁva asmanā.",
  "snp3.2:20.1_0": "Vasīkaritvā saṅkappaṁ,",
  "snp3.2:20.2_0": "Satiñca sūpatiṭṭhitaṁ;",
  "snp3.2:20.3_0": "Raṭṭhā raṭṭhaṁ vicarissaṁ,",
  "snp3.2:20.4_0": "Sāvake vinayaṁ puthū.",
  "snp3.2:21.1_0": "Te appamattā pahitattā,",
  "snp3.2:21.2_0": "Mama sāsanakārakā;",
  "snp3.2:21.3_0": "Akāmassa te gamissanti,",
  "snp3.2:21.4_0": "Yattha gantvā na socare”.",
  "snp3.2:22.1_0": "“Satta vassāni bhagavantaṁ,",
  "snp3.2:22.2_0": "Anubandhiṁ padāpadaṁ;",
  "snp3.2:22.3_0": "Otāraṁ nādhigacchissaṁ,",
  "snp3.2:22.4_0": "Sambuddhassa satīmato.",
  "snp3.2:23.1_0": "Medavaṇṇaṁva pāsāṇaṁ,",
  "snp3.2:23.2_0": "Vāyaso anupariyagā;",
  "snp3.2:23.3_0": "Apettha muduṁ vindema,",
  "snp3.2:23.4_0": "Api assādanā siyā.",
  "snp3.2:24.1_0": "Aladdhā tattha assādaṁ,",
  "snp3.2:24.2_0": "Vāyasetto apakkami;",
  "snp3.2:24.3_0": "Kākova selamāsajja,",
  "snp3.2:24.4_0": "Nibbijjāpema gotamaṁ”.",
  "snp3.2:25.1_0": "Tassa sokaparetassa,",
  "snp3.2:25.2_0": "Vīṇā kacchā abhassatha;",
  "snp3.2:25.3_0": "Tato so dummano yakkho,",
  "snp3.2:25.4_0": "Tatthevantaradhāyathāti.",
  "snp3.2:25.5_0": "Padhānasuttaṁ dutiyaṁ."
}