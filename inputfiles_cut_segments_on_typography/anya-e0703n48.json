{
  "anya-e0703n48:0_0": "Ekūnapaññāsatima pariccheda",
  "anya-e0703n48:1_0": "Rājadvayadīpano",
  "anya-e0703n48:2_0": "1.",
  "anya-e0703n48:3_0": "Evaṁ tasmiṁ mate tassa, kātabbaṁ sādhukāriya;",
  "anya-e0703n48:4_0": "Mahādīpādo senavho, ādāya balavāhanaṁ.",
  "anya-e0703n48:5_0": "2.",
  "anya-e0703n48:6_0": "Āgamma nagaraṁ rājā, ahosi dharaṇī tale;",
  "anya-e0703n48:7_0": "Ādikappamhi rājūnaṁ, dassanto cariyaṁ piya.",
  "anya-e0703n48:8_0": "3.",
  "anya-e0703n48:9_0": "Saddho mahādhano sūro, muttacāgī nirālayo;",
  "anya-e0703n48:10_0": "Yācayogo mahābhogo, sampannabalavāhano.",
  "anya-e0703n48:11_0": "4.",
  "anya-e0703n48:12_0": "Kittiyā’malabhūtāya, tathā tejo guṇena ca;",
  "anya-e0703n48:13_0": "Sannipātaṁva so canda-sūriyānaṁ nidassayi.",
  "anya-e0703n48:14_0": "5.",
  "anya-e0703n48:15_0": "Asaṅkiṇṇa guṇākiṇṇo, suviciṇṇa guṇāguṇo;",
  "anya-e0703n48:16_0": "Nitthiṇṇapāpo nibbiṇṇa-saṁsāro sāradassano.",
  "anya-e0703n48:17_0": "6.",
  "anya-e0703n48:18_0": "Bhariyā tassa yā āsi, saṅghātaṁ so bhisecayi;",
  "anya-e0703n48:19_0": "Mahesībhāve datvāna, parihāraṁ yathābhataṁ.",
  "anya-e0703n48:20_0": "7.",
  "anya-e0703n48:21_0": "Mahindaṁ nāma sappaññaṁ, kaṇiṭṭhaṁ bhātaraṁ sakaṁ;",
  "anya-e0703n48:22_0": "Datvā dakkhiṇabhāgaṁ so, oparajje’bhisecayi.",
  "anya-e0703n48:23_0": "8.",
  "anya-e0703n48:24_0": "Antepure’parajjhitvā, so raññā avadhārite;",
  "anya-e0703n48:25_0": "Saputtadāro vuṭṭhāya, aññāto malayaṁ agā.",
  "anya-e0703n48:26_0": "9.",
  "anya-e0703n48:27_0": "Uppajjittha tadā putto, rañño saṅghāya deviyā;",
  "anya-e0703n48:28_0": "Dassento’va panādassa, kumāra rūpamattano.",
  "anya-e0703n48:29_0": "10.",
  "anya-e0703n48:30_0": "Rājā taṁ jātamattaṁ’va, disvā santhuṭṭhamānuso;",
  "anya-e0703n48:31_0": "Siddhatthaṁ lumbinījātaṁ, rājā suddhodano viya.",
  "anya-e0703n48:32_0": "11.",
  "anya-e0703n48:33_0": "Dhaññapuññaguṇūpeto, ṭhapetvā dīpamekakaṁ;",
  "anya-e0703n48:34_0": "Jambudīpe’pi kasiṇe, rajjayoggoti me suto.",
  "anya-e0703n48:35_0": "12.",
  "anya-e0703n48:36_0": "Nāmadāna dineyeva, parihārena sabbaso;",
  "anya-e0703n48:37_0": "Oparajje bhisiñcitvā, dakkhiṇaṁ desamassa’dā.",
  "anya-e0703n48:38_0": "13.",
  "anya-e0703n48:39_0": "Yuvarājāpi malaye, vasanto’va mahīpatiṁ;",
  "anya-e0703n48:40_0": "Ārādhetvā upāyena, anuññato sabhātarā.",
  "anya-e0703n48:41_0": "14.",
  "anya-e0703n48:42_0": "Nikāyattaya vā sīhi, saddhiṁ bhikkhūhi āgato;",
  "anya-e0703n48:43_0": "Disvā rājānamettheva, sandhīṁ’kāsi akuppiyaṁ.",
  "anya-e0703n48:44_0": "15.",
  "anya-e0703n48:45_0": "Yā tassa yuvarājassa, bhariyā tissā nāmikā;",
  "anya-e0703n48:46_0": "Rājinī sā vijāyittha, dhītaraṁ saṅghanāmikaṁ.",
  "anya-e0703n48:47_0": "16.",
  "anya-e0703n48:48_0": "Kittināmā’parāyā ca, bhariyā sāpi kho pana;",
  "anya-e0703n48:49_0": "Vijāyi putte cattāro, tathā ekañca dhītaraṁ.",
  "anya-e0703n48:50_0": "17.",
  "anya-e0703n48:51_0": "Tadā rājāpi cintetvā, evaṁ sati kaṇiṭṭhako;",
  "anya-e0703n48:52_0": "Nissaṅko mayi hotīti, sammā mantīhi mantiya.",
  "anya-e0703n48:53_0": "18.",
  "anya-e0703n48:54_0": "Dhītaraṁ yuvarājassa, surūpiṁ rūpanāmikaṁ;",
  "anya-e0703n48:55_0": "Kassapassa’tta puttassa, vivāhaṁ kārayi budho.",
  "anya-e0703n48:56_0": "19.",
  "anya-e0703n48:57_0": "Dakkhiṇaṁ desamasseva, kaṇiṭṭhassa sadāpayi;",
  "anya-e0703n48:58_0": "Rājaputtassa pādāpi, paccekaṁ bhogamattano.",
  "anya-e0703n48:59_0": "20.",
  "anya-e0703n48:60_0": "Rajjamhi sabbaṁ tasseva, paribhogāya dāpayi;",
  "anya-e0703n48:61_0": "Kevalantu vicāresi, dīpaṁ dīpa hitāvaho.",
  "anya-e0703n48:62_0": "21.",
  "anya-e0703n48:63_0": "Tesaṁ saṁvāsamanvāya, ubhinnaṁ puññakamminaṁ;",
  "anya-e0703n48:64_0": "Dhaññapuññaguṇūpetā, vijātā puttadhītaro.",
  "anya-e0703n48:65_0": "22.",
  "anya-e0703n48:66_0": "Katvā sabbopahārena, dāṭhādhātu mahāmahaṁ;",
  "anya-e0703n48:67_0": "Āruyha varapāsādaṁ, ratanavhaṁ mahīpati.",
  "anya-e0703n48:68_0": "23.",
  "anya-e0703n48:69_0": "Tadā sovaṇṇayassāpi, sambuddhassa purā ṭhitaṁ;",
  "anya-e0703n48:70_0": "Suññaṁ piṭṭhaṁ sayaṁ disvā, kasmā evanti saṁvadi.",
  "anya-e0703n48:71_0": "24.",
  "anya-e0703n48:72_0": "Tato amaccā āhaṁsu, nājānāsi mahīpati;",
  "anya-e0703n48:73_0": "Mahāpitunarindassa, kāle tava narissaraṁ.",
  "anya-e0703n48:74_0": "25.",
  "anya-e0703n48:75_0": "Paṇḍurājā idhāgamma, dīpametaṁ vināsiya;",
  "anya-e0703n48:76_0": "Sabbaṁ sāragataṁ dīpe, samādāya gato iti.",
  "anya-e0703n48:77_0": "26.",
  "anya-e0703n48:78_0": "Taṁ sutvā lajjito rājā, sayaṁ viya parājito;",
  "anya-e0703n48:79_0": "Tadaheva niyojesi, amacce balasaṅgahe.",
  "anya-e0703n48:80_0": "27.",
  "anya-e0703n48:81_0": "Tadā’va kira āgañchi, paṇḍurājakumārako;",
  "anya-e0703n48:82_0": "Paribhūto sarājena, rajjatthaṁ kata nicchayo.",
  "anya-e0703n48:83_0": "28.",
  "anya-e0703n48:84_0": "Rājā disvā’ti santuṭṭho, kattabbaṁ tassa kāriya;",
  "anya-e0703n48:85_0": "Mahātittha mupāgamma, paṭṭanaṁ sematraso.",
  "anya-e0703n48:86_0": "29.",
  "anya-e0703n48:87_0": "Mahantaṁ balakāyañca, tassopakaraṇāni ca;",
  "anya-e0703n48:88_0": "Anunaṁ paṭiyādetvā, devasenaṁva sajjitaṁ.",
  "anya-e0703n48:89_0": "30.",
  "anya-e0703n48:90_0": "Paṇḍurājakumārena, saddhiṁ senāpati sakaṁ;",
  "anya-e0703n48:91_0": "Gantvā taṁ paṇḍurājānaṁ, hantvānikamito purā.",
  "anya-e0703n48:92_0": "31.",
  "anya-e0703n48:93_0": "Ratanaṁ sabbamādāya, datvā rajjaṁ imassa ca;",
  "anya-e0703n48:94_0": "Na cireneva ehītī, uyyojesi mahāyaso.",
  "anya-e0703n48:95_0": "32.",
  "anya-e0703n48:96_0": "Sopi evaṁ karomīti, paṭissutvā mahīpatiṁ;",
  "anya-e0703n48:97_0": "Vinditvā balamādāya, nāmamāruyha taṁ khaṇe.",
  "anya-e0703n48:98_0": "33.",
  "anya-e0703n48:99_0": "Paratīraṁ tato gantvā, saṁvuḷaha balavāhano;",
  "anya-e0703n48:100_0": "Vināsayanto paccantaṁ, vāresi madhuraṁ puraṁ.",
  "anya-e0703n48:101_0": "34.",
  "anya-e0703n48:102_0": "Dvārāni pidahitvāna, pacchindittha gatāgataṁ;",
  "anya-e0703n48:103_0": "Tato aggiṁ khipāpesi, gopuraṭṭāla koṭṭhake.",
  "anya-e0703n48:104_0": "35.",
  "anya-e0703n48:105_0": "Evaṁ sīhaḷasenāya, paviṭṭhāya sakaṁ puraṁ;",
  "anya-e0703n48:106_0": "Sabbaṁ vilumpamānāya, senaṅgaṁ ghātayantiyā.",
  "anya-e0703n48:107_0": "36.",
  "anya-e0703n48:108_0": "Paṇḍurājā nisammetaṁ, samādāya sakaṁ balaṁ;",
  "anya-e0703n48:109_0": "Vegasā taṁ samāgamma, yuddhaṁ kātuṁ samārabhi.",
  "anya-e0703n48:110_0": "37.",
  "anya-e0703n48:111_0": "Asampuṇṇa balattā so, viddho sallena bhūpati;",
  "anya-e0703n48:112_0": "Hatthikkhandhagatoyeva, vihāya puramattano.",
  "anya-e0703n48:113_0": "38.",
  "anya-e0703n48:114_0": "Palāyitvā gataṭhāne, jīvitaṁ nijamessaji;",
  "anya-e0703n48:115_0": "Bhariyāva’ssa tenāsi, sampattā jīvitakkhayaṁ.",
  "anya-e0703n48:116_0": "39.",
  "anya-e0703n48:117_0": "Tato sīhaḷasenāsā, paviṭṭhā nibbhayā puraṁ;",
  "anya-e0703n48:118_0": "Tattha sabbaṁ vilumpittha, devā’sirapuraṁ yathā.",
  "anya-e0703n48:119_0": "40.",
  "anya-e0703n48:120_0": "Senāpati tato rāja-gehe bhattaṁ samekkhiya;",
  "anya-e0703n48:121_0": "Dīpānitamimamhā ca, tatraṭṭhañca mahārahaṁ.",
  "anya-e0703n48:122_0": "41.",
  "anya-e0703n48:123_0": "Sāraṁ sabbaṁsamādāya, dese ca nagare ṭhitaṁ;",
  "anya-e0703n48:124_0": "Katvā issariyaṁ tattha, vasevattiya attano.",
  "anya-e0703n48:125_0": "42.",
  "anya-e0703n48:126_0": "Paṇḍurāja kumāraṁ tu, tattha rajje’bhi siñciya;",
  "anya-e0703n48:127_0": "Kāretvā parihārañca, desaṁ tassa samappiya.",
  "anya-e0703n48:128_0": "43.",
  "anya-e0703n48:129_0": "Yathāruciṁ gahetvāna, hatthiasse nare’pi ca;",
  "anya-e0703n48:130_0": "Tattha tattha yathā kāmaṁ, vasanto akuto bhayo.",
  "anya-e0703n48:131_0": "44.",
  "anya-e0703n48:132_0": "Samudda taṭamāgamma, ṭhatvā tattha yathāsukhaṁ;",
  "anya-e0703n48:133_0": "Kīḷanto viya nāvaṁ so, samāruyha visārado.",
  "anya-e0703n48:134_0": "45.",
  "anya-e0703n48:135_0": "Mahātittha mupāgamma, vanditvā dharaṇī patiṁ;",
  "anya-e0703n48:136_0": "Taṁ sāsanaṁ nivedetvā, sāraṁ dassesi āhaṭaṁ.",
  "anya-e0703n48:137_0": "46.",
  "anya-e0703n48:138_0": "Rājā sādhūti vatvāna, kāretvā tassa saṅgahaṁ;",
  "anya-e0703n48:139_0": "Saddhiṁ senāya āgantvā, pakaṭṭhāya sakaṁ puraṁ.",
  "anya-e0703n48:140_0": "47.",
  "anya-e0703n48:141_0": "Jayapānaṁ pivitvāna, katvā vijayamaṅgalaṁ;",
  "anya-e0703n48:142_0": "Mahādhāgaṁ pavattetvā, yācakānaṁ yathā ruciṁ.",
  "anya-e0703n48:143_0": "48.",
  "anya-e0703n48:144_0": "Sabbaṁ pākatikaṁ kāsi, sāraṁ dīpe nirālayo;",
  "anya-e0703n48:145_0": "Sovaṇṇa paṭimāyo ca, yathāṭhāne ṭhapāpayi.",
  "anya-e0703n48:146_0": "49.",
  "anya-e0703n48:147_0": "Suññaṁ ratanapāsāde, piṭṭhaṁ pūresi satthuno;",
  "anya-e0703n48:148_0": "Kāsi rakkhapidhānena, nibbhayaṁ dharaṇītalaṁ.",
  "anya-e0703n48:149_0": "50.",
  "anya-e0703n48:150_0": "Tato paṭṭhāya dīpaṁso, arīnaṁ duppadhaṁsiyaṁ;",
  "anya-e0703n48:151_0": "Katvā vaḍḍhesi bhogehi, uttarādikuruṁ piya.",
  "anya-e0703n48:152_0": "51.",
  "anya-e0703n48:153_0": "Khinnā pubbassa rājassa, kāle dīpamhi pāṇino;",
  "anya-e0703n48:154_0": "Nibbutā taṁ samāgamma, ghammā viya valāhakā.",
  "anya-e0703n48:155_0": "52.",
  "anya-e0703n48:156_0": "Tassa vīsatime vasse, vihāre abhayuttare;",
  "anya-e0703n48:157_0": "Nikkhamitvā gatā hesuṁ, paṁsukūlika bhikkhavo.",
  "anya-e0703n48:158_0": "53.",
  "anya-e0703n48:159_0": "Yuvarājā mahindo so, dhumarājassa satthuno;",
  "anya-e0703n48:160_0": "Kārāpayi gharaṁ rammaṁ, dassaneyyaṁ manoramaṁ.",
  "anya-e0703n48:161_0": "54.",
  "anya-e0703n48:162_0": "Bodhigehaṁ karonto taṁ, disvā vaḍḍhakīno tadā;",
  "anya-e0703n48:163_0": "Vaṁsena sākhaṁ āhacca, bhijjantaṁ varabodhiyā.",
  "anya-e0703n48:164_0": "55.",
  "anya-e0703n48:165_0": "Kintu kātabbametthāti, yuvarājaṁ nivedayuṁ;",
  "anya-e0703n48:166_0": "So taṁ taṁ mupasaṁkamma, mahāpūjāya pūjiya.",
  "anya-e0703n48:167_0": "56.",
  "anya-e0703n48:168_0": "Sace satthā, hitatthāya, sambhūto sabbapāṇinaṁ;",
  "anya-e0703n48:169_0": "Laddhuṁ puññassa’nagghassa, gharassa karaṇeti’dha.",
  "anya-e0703n48:170_0": "57.",
  "anya-e0703n48:171_0": "Sākhā gacchaṁ tu uddhaṁva, kātuṁ sakkā yathāgharaṁ;",
  "anya-e0703n48:172_0": "Evamārādhayitvāna, vanditvā saṅgharaṁ gato.",
  "anya-e0703n48:173_0": "58.",
  "anya-e0703n48:174_0": "Tadā sākhā dumindassa, rattiyaṁ uddhamuggami;",
  "anya-e0703n48:175_0": "Tato kammakarā sabbaṁ, ārocesuṁ sasāmino.",
  "anya-e0703n48:176_0": "59.",
  "anya-e0703n48:177_0": "Yuvarājā’ti santuṭṭho, bhāturañño nivediya;",
  "anya-e0703n48:178_0": "Mahāpūjāya pūjesi, vissajjiya bahudhanaṁ.",
  "anya-e0703n48:179_0": "60.",
  "anya-e0703n48:180_0": "Tathā mahindasenavhaṁ, pariveṇañca kāriya;",
  "anya-e0703n48:181_0": "Saṅghassā’dā sabhogaṁ so, puññā puññānicācīni.",
  "anya-e0703n48:182_0": "61.",
  "anya-e0703n48:183_0": "Adā saparisaṁ bhattaṁ, vatthaṁ chattamupāhanaṁ;",
  "anya-e0703n48:184_0": "Tathā gamiyabhattañca, nahānañca sabhattakaṁ.",
  "anya-e0703n48:185_0": "62.",
  "anya-e0703n48:186_0": "Evaṁ khuddānu khuddāni, katvā puññāni so vibhū;",
  "anya-e0703n48:187_0": "Rañño tettiṁsavassamhi, yathākammamupāgami.",
  "anya-e0703n48:188_0": "63.",
  "anya-e0703n48:189_0": "Atha rājā matetasmiṁ, kaṇiṭṭhamudayaṁ sakaṁ;",
  "anya-e0703n48:190_0": "Tassa ṭhāne ṭhapetvāna, sabbaṁ tasseva tassadā.",
  "anya-e0703n48:191_0": "64.",
  "anya-e0703n48:192_0": "Tulābhārassa dānena, dīnānāthe satappayi;",
  "anya-e0703n48:193_0": "Dhammakammena sodhesi, nikāyattayamekato.",
  "anya-e0703n48:194_0": "65.",
  "anya-e0703n48:195_0": "Soṇṇathālīsahassaṁ so, muttāhi paripūriya;",
  "anya-e0703n48:196_0": "Ṭhapetvā maṇimekekaṁ, tassopari mahārahaṁ.",
  "anya-e0703n48:197_0": "66.",
  "anya-e0703n48:198_0": "Brāhmaṇānaṁ sahassassa, suddhe ratanabhājane;",
  "anya-e0703n48:199_0": "Bhojetvā khīrapāyāsaṁ, dāpetvā hemasuttakaṁ.",
  "anya-e0703n48:200_0": "67.",
  "anya-e0703n48:201_0": "Tathā navehi vatthehi, acchādetvā yathāruciṁ;",
  "anya-e0703n48:202_0": "Santappesi mahantena, parihārena puññavā.",
  "anya-e0703n48:203_0": "68.",
  "anya-e0703n48:204_0": "Bhikkhūnaṁ dīpavāsīnaṁ, adāsi ca ticīvaraṁ;",
  "anya-e0703n48:205_0": "Adā sabbāsamitthīnaṁ, vatthañca sumanoharaṁ.",
  "anya-e0703n48:206_0": "69.",
  "anya-e0703n48:207_0": "Kāretvā lohapāsādaṁ, vejayantasarikkhakaṁ;",
  "anya-e0703n48:208_0": "Vaḍḍhesi paṭimaṁ tattha, suvaṇṇaghaṭakoṭṭimaṁ.",
  "anya-e0703n48:209_0": "70.",
  "anya-e0703n48:210_0": "Sutvā uposathāgāra-bhāvaṁ sabba mahesīnaṁ;",
  "anya-e0703n48:211_0": "Tuccho yaṁ neva hotūti, vāsaṁ saṅghassa taṁ akā.",
  "anya-e0703n48:212_0": "71.",
  "anya-e0703n48:213_0": "Bhogagāme ca tassadā, rakkhake ca niyojayi;",
  "anya-e0703n48:214_0": "Bhikkhū dvattiṁsamattāhi, vasantūti niyāmayi.",
  "anya-e0703n48:215_0": "72.",
  "anya-e0703n48:216_0": "Gaṅgāya mariyādaṁ so, kāresi maṇimekhalaṁ;",
  "anya-e0703n48:217_0": "Toyaniddhamanañcākā, maṇihīrakavāpiyā.",
  "anya-e0703n48:218_0": "73.",
  "anya-e0703n48:219_0": "Kaṭṭhuntanagare ceva, kāṇavāpiṁca bandhayi;",
  "anya-e0703n48:220_0": "Vejjasālañca kāresi, cetiyamhi girimhi so.",
  "anya-e0703n48:221_0": "74.",
  "anya-e0703n48:222_0": "Buddhagāmavihārañca, vihāraṁ mahiyaṅgaṇaṁ;",
  "anya-e0703n48:223_0": "Kūṭatissa vihārañca, bhogagāme na vaḍḍhayi.",
  "anya-e0703n48:224_0": "75.",
  "anya-e0703n48:225_0": "Maṇḍalassa girissā’dā, vihārassa sagāmake;",
  "anya-e0703n48:226_0": "Uttarāḷhe ca kāresi, pāsādaṁ pariveṇake.",
  "anya-e0703n48:227_0": "76.",
  "anya-e0703n48:228_0": "Mahāsenassa buddhassa, gāmaṁ datvāna rakkhake;",
  "anya-e0703n48:229_0": "Dāsi sobbhavihāre ca, kāresi paṭimāgharaṁ.",
  "anya-e0703n48:230_0": "77.",
  "anya-e0703n48:231_0": "Bodhisatte ca vaḍḍhesi, pāsāde maṇimekhale;",
  "anya-e0703n48:232_0": "Sīlāmayamunindassa, jiṇṇagehampi kārayi.",
  "anya-e0703n48:233_0": "78.",
  "anya-e0703n48:234_0": "Rāja taṁ bodhisattañca, sagharaṁ tattha sannahi;",
  "anya-e0703n48:235_0": "Ālavālaṁ dumindassa, gandhitvā kā mahāmahaṁ.",
  "anya-e0703n48:236_0": "79.",
  "anya-e0703n48:237_0": "Likhitvā hemapaṭṭamhi, sabbaratanasuttakaṁ;",
  "anya-e0703n48:238_0": "Mahāpūjamakā tassa, abhidhammaṁ kathāpayi.",
  "anya-e0703n48:239_0": "80.",
  "anya-e0703n48:240_0": "Ānandapaṭimaṁ netvā, puraṁ katvā padakkhiṇaṁ;",
  "anya-e0703n48:241_0": "Parittaṁ bhikkhusaṅghena, bhaṇāpetvā yathāvidhiṁ.",
  "anya-e0703n48:242_0": "81.",
  "anya-e0703n48:243_0": "Parittodakasekena, janaṁ katvā nirāturaṁ;",
  "anya-e0703n48:244_0": "Rājā rogabhayaṁ pevaṁ, nīharittha sadesato.",
  "anya-e0703n48:245_0": "82.",
  "anya-e0703n48:246_0": "Abhisekaṁ gahetvāna, hemavāluka cetiye;",
  "anya-e0703n48:247_0": "Anusaṁvaccharaṁ kātuṁ, taṁ cārittaṁ likhāpayi.",
  "anya-e0703n48:248_0": "83.",
  "anya-e0703n48:249_0": "Adā māsassa catūsu, uposathadinesu so;",
  "anya-e0703n48:250_0": "Catunnañca sahassānaṁ, vatthadānaṁ sabhattakaṁ.",
  "anya-e0703n48:251_0": "84.",
  "anya-e0703n48:252_0": "Vesākhakīḷaṁ kīḷittha, saddhiṁ duggatakehi so;",
  "anya-e0703n48:253_0": "Annaṁ pānañca vatthañca, tesaṁ datvā yathāruciṁ.",
  "anya-e0703n48:254_0": "85.",
  "anya-e0703n48:255_0": "Bhikkhusaṅghassa dīpamhi, niccadānaṁ pavattayi;",
  "anya-e0703n48:256_0": "Santappesi ca dānena, kapaṇaddhikavaṇibbake.",
  "anya-e0703n48:257_0": "86.",
  "anya-e0703n48:258_0": "Tassa rañño mahesī ca, saṅghanāmā akārayi;",
  "anya-e0703n48:259_0": "Pabbataṁ saṅghasenavhaṁ, sabhogamabhayuttare.",
  "anya-e0703n48:260_0": "87.",
  "anya-e0703n48:261_0": "Nīlacūḷāmaṇiñcākā, silāmaya mahesino;",
  "anya-e0703n48:262_0": "Pūjaṁ sabbopahārehi, kāsi satthussa sabbadā.",
  "anya-e0703n48:263_0": "88.",
  "anya-e0703n48:264_0": "Tassa senāpaticā’kā, senasenāpativhayaṁ;",
  "anya-e0703n48:265_0": "Pariveṇaṁ mahābhogaṁ, sūro tuṭṭhakanāmako.",
  "anya-e0703n48:266_0": "89.",
  "anya-e0703n48:267_0": "Evaṁ sapariso katvā, sapuññāni mahāyaso;",
  "anya-e0703n48:268_0": "Pañcatiṁsatime vasse, devalokamupāgami.",
  "anya-e0703n48:269_0": "90.",
  "anya-e0703n48:270_0": "Tato tassā’nujo āsi, udayo nāma khattiyo;",
  "anya-e0703n48:271_0": "Rājā sabbappayogehi, hitesī dīpavāsīnaṁ.",
  "anya-e0703n48:272_0": "91.",
  "anya-e0703n48:273_0": "Hutvā so sayaṁ rājā, kaṇiṭṭhaṁ sakabhātaraṁ;",
  "anya-e0703n48:274_0": "Mahādīpādaṭhānamhi, ṭhapi kassapanāmakaṁ.",
  "anya-e0703n48:275_0": "92.",
  "anya-e0703n48:276_0": "Rājā cintiya ñātīnaṁ, kātabbo saṅgaho iti;",
  "anya-e0703n48:277_0": "Evaṁ kassapanāmassa, bhātuputtassa dhītaraṁ.",
  "anya-e0703n48:278_0": "93.",
  "anya-e0703n48:279_0": "Yuvarājassa tassā’kā, bhariyaṁ senanāmikaṁ;",
  "anya-e0703n48:280_0": "Dhāresica sayaṁ rājā, aparaṁ tissasavhayaṁ.",
  "anya-e0703n48:281_0": "94.",
  "anya-e0703n48:282_0": "Mahindassuparājassa, rājadhītāya kittiyā;",
  "anya-e0703n48:283_0": "Putto kittaggabodhīti, ādipādo vibuddhiko.",
  "anya-e0703n48:284_0": "95.",
  "anya-e0703n48:285_0": "Coro hutvā mahārañño, nikkhamitvāna rattiyaṁ;",
  "anya-e0703n48:286_0": "Eko aññātavesena, samupāgammarohaṇaṁ.",
  "anya-e0703n48:287_0": "96.",
  "anya-e0703n48:288_0": "Janaṁ hattagataṁ katvā, desaṁ sabbaṁ vināsiya;",
  "anya-e0703n48:289_0": "Ghātāpayittha tatraṭṭhaṁ, so taṁ mātulamattano.",
  "anya-e0703n48:290_0": "97.",
  "anya-e0703n48:291_0": "Taṁ sutvā dharaṇīpālo, tasmiṁ’tīva pakuppiya;",
  "anya-e0703n48:292_0": "Ānetuṁ tamupāyaṁ so, gavesanto tathā tathā.",
  "anya-e0703n48:293_0": "98.",
  "anya-e0703n48:294_0": "Bhātuputtaṁ tamāhuya, yuvarājaṁ sakassapaṁ;",
  "anya-e0703n48:295_0": "Āmantesi mahāpuñña, sahāyo hoti me iti.",
  "anya-e0703n48:296_0": "99.",
  "anya-e0703n48:297_0": "Kiṁ me kattabba’miccāha, paccāha dharaṇīpati;",
  "anya-e0703n48:298_0": "Putto tava mahindo so, vuddhippatto mahābalo.",
  "anya-e0703n48:299_0": "100.",
  "anya-e0703n48:300_0": "Lābhī rohaṇadesassa, mātito pitito’pi ca;",
  "anya-e0703n48:301_0": "Sūro sabbasaho vīro, kusalo katūpāsano.",
  "anya-e0703n48:302_0": "101.",
  "anya-e0703n48:303_0": "Saṅgāmayoggo matimā, nipuṇo nayakovido;",
  "anya-e0703n48:304_0": "Taṁ pesetvā nayissāma, pāpaṁ mātulaghātakaṁ.",
  "anya-e0703n48:305_0": "102.",
  "anya-e0703n48:306_0": "Taṁ sutvā vacanaṁ rañño, kassapo bhāsi sādaro;",
  "anya-e0703n48:307_0": "Deva devena vutto’haṁ, gaccheyyaṁ kintu me suto.",
  "anya-e0703n48:308_0": "103.",
  "anya-e0703n48:309_0": "Vaṁso me pālito hoti, pasādo ca tavādhipa;",
  "anya-e0703n48:310_0": "Tasmā kālamahāpetvā, yaṁ icchasi tathā kuru.",
  "anya-e0703n48:311_0": "104.",
  "anya-e0703n48:312_0": "Sutvā atīvasantuṭṭho, narindo tassa taṁ vaco;",
  "anya-e0703n48:313_0": "Mahanthaṁ balakāyaṁ so, sabbaso paṭiyādiya.",
  "anya-e0703n48:314_0": "105.",
  "anya-e0703n48:315_0": "Mahatā parihārena, mahindaṁ rājapotakaṁ;",
  "anya-e0703n48:316_0": "Rakkhituṁ taṁ niyojetvā, vajiraggañca nāyakaṁ.",
  "anya-e0703n48:317_0": "106.",
  "anya-e0703n48:318_0": "Tucchaṁ viya puraṁ katvā, sabbañca balavāhanaṁ;",
  "anya-e0703n48:319_0": "Sabbopakaraṇañceva, anūnaṁ tassa dāpiya.",
  "anya-e0703n48:320_0": "107.",
  "anya-e0703n48:321_0": "Sayaṁ tamanugacchanto, padasā’va narissaro;",
  "anya-e0703n48:322_0": "Uyyojesi mahāpuñña, gaccha rukkhāti mediniṁ.",
  "anya-e0703n48:323_0": "108.",
  "anya-e0703n48:324_0": "Mahindo so mahindo’va, devasenā purakkhato;",
  "anya-e0703n48:325_0": "Gacchanto suvīrocittha, devāsuramahāhavaṁ.",
  "anya-e0703n48:326_0": "109.",
  "anya-e0703n48:327_0": "Tato gantvā na cirena, guttasālamupāgami;",
  "anya-e0703n48:328_0": "Tato jānapadā sabbe, maṇḍalikā ca raṭṭhiyā.",
  "anya-e0703n48:329_0": "110.",
  "anya-e0703n48:330_0": "Tena mātulaghātena, pāpakena upaddutā;",
  "anya-e0703n48:331_0": "Gantvā taṁ parivāresuṁ, laddho no sāmiko iti.",
  "anya-e0703n48:332_0": "111.",
  "anya-e0703n48:333_0": "Patanto sopi kho coro, ṭhitova girimaṇḍale;",
  "anya-e0703n48:334_0": "Sabbaṁ hatthagataṁ katvā, rājabhaṇḍaṁ mahagghiyaṁ.",
  "anya-e0703n48:335_0": "112.",
  "anya-e0703n48:336_0": "Hatthī asseca ādāya, gantvā malayamāruhi;",
  "anya-e0703n48:337_0": "Mahindasenā ghātentī, tassa senaṁ tahiṁ tahiṁ.",
  "anya-e0703n48:338_0": "113.",
  "anya-e0703n48:339_0": "Padānupadamasse’va, gacchanti hatthiassake;",
  "anya-e0703n48:340_0": "Disvā malayapādamhi, gahetvā ettha so iti.",
  "anya-e0703n48:341_0": "114.",
  "anya-e0703n48:342_0": "Tattha pāvisimaddantī, sabbaṁ malayakānanaṁ;",
  "anya-e0703n48:343_0": "Nadīyo pallale ceva, karonti maggasādise.",
  "anya-e0703n48:344_0": "115.",
  "anya-e0703n48:345_0": "Bālakova janaṁ disvā, sabbaṁ ratanamattano;",
  "anya-e0703n48:346_0": "Kodhābhibhūto chaḍḍesi, nadī sobbhataṭādīsu.",
  "anya-e0703n48:347_0": "116.",
  "anya-e0703n48:348_0": "Ekakova nilīyittha, vane pabbatakandare;",
  "anya-e0703n48:349_0": "Gavesanto jano disvā, tamaggahi narādhammaṁ.",
  "anya-e0703n48:350_0": "117.",
  "anya-e0703n48:351_0": "Tamādāya’ti tuṭṭho so, jano āgamma sajjukaṁ;",
  "anya-e0703n48:352_0": "Mahindamupadassesi, nisinnaṁ guttasālake.",
  "anya-e0703n48:353_0": "118.",
  "anya-e0703n48:354_0": "So taṁ disvā hasitvāna,",
  "anya-e0703n48:355_0": "Bhutto kiṁ rohaṇo”iti;",
  "anya-e0703n48:356_0": "Nāyakassa niyyātetvā,",
  "anya-e0703n48:357_0": "Vajiraggassa rājino.",
  "anya-e0703n48:358_0": "119.",
  "anya-e0703n48:359_0": "Sayaṁ senaṁ samādāya, mahāgāmamupāgato;",
  "anya-e0703n48:360_0": "Rohaṇā dhipati hutvā, karonto lokasaṅgahaṁ.",
  "anya-e0703n48:361_0": "120.",
  "anya-e0703n48:362_0": "Janaṁ pākatikaṁ katvā, bālakena vibādhitaṁ;",
  "anya-e0703n48:363_0": "Sāsanañca yathāṭhāne, ṭhapetvā tena nāsitaṁ.",
  "anya-e0703n48:364_0": "121.",
  "anya-e0703n48:365_0": "Pupphārāme phalārāme, kārayitvā tahiṁ tahiṁ;",
  "anya-e0703n48:366_0": "Vāpiyo’pi ca gaṇhitvā, bandhāpetvā mahānadiṁ.",
  "anya-e0703n48:367_0": "122.",
  "anya-e0703n48:368_0": "Sabbattha sulabhaṁ katvā, saṅghassa catupaccayaṁ;",
  "anya-e0703n48:369_0": "Duṭṭhe ca paṭibāhetvā, maṇḍalīke ca raṭṭhiye.",
  "anya-e0703n48:370_0": "123.",
  "anya-e0703n48:371_0": "Core ca parisodhetvā, katvā vigatakaṇṭakaṁ;",
  "anya-e0703n48:372_0": "Tosayanto’khilaṁ lokaṁ, cāgabhogasamappito.",
  "anya-e0703n48:373_0": "124.",
  "anya-e0703n48:374_0": "Upāsaniyo viññūhi, sevanīyo dhanatthīhi;",
  "anya-e0703n48:375_0": "Kapparukkhūpamo sabba-yācakānaṁ hitāvaho.",
  "anya-e0703n48:376_0": "125.",
  "anya-e0703n48:377_0": "Hitvā dubbinayaṁ dese, pubbakehi pavattitaṁ;",
  "anya-e0703n48:378_0": "Samācaranto dhammañca, vāsaṁ tattheva kappayi.",
  "anya-e0703n48:379_0": "126.",
  "anya-e0703n48:380_0": "Ādipādaṁ gahetvāna, vajiraggo vināyako;",
  "anya-e0703n48:381_0": "Anurādhamupāgamma, rājānamabhidassayi.",
  "anya-e0703n48:382_0": "127.",
  "anya-e0703n48:383_0": "Rājāpi disvā taṁ kuddho, khippaṁ pakkhippa cārake;",
  "anya-e0703n48:384_0": "Rakkhāvaraṇamassādā, viheṭhesi ca sabbāso.",
  "anya-e0703n48:385_0": "128.",
  "anya-e0703n48:386_0": "Adāsi ca tulābhāraṁ, tikkhattuṁ so mahāyaso;",
  "anya-e0703n48:387_0": "Thūpārāmamhi thūpañca, hemapaṭṭena chādayi.",
  "anya-e0703n48:388_0": "129.",
  "anya-e0703n48:389_0": "Katvā tattheva pāsādaṁ, bhikkhusaṅghaṁ nivāsiya;",
  "anya-e0703n48:390_0": "Vihāre nagare ceva, paṭisaṅkhāsi jiṇṇakaṁ.",
  "anya-e0703n48:391_0": "130.",
  "anya-e0703n48:392_0": "Kadambanadīyā’kāsi, nijjharaṁ thirabandhanaṁ;",
  "anya-e0703n48:393_0": "Mariyādaṁ pavaḍḍhesi, vāpiyaṁ so mayettiyaṁ.",
  "anya-e0703n48:394_0": "131.",
  "anya-e0703n48:395_0": "Tattha niddhamanaṁcā’kā, anuvassampi bhūmipo;",
  "anya-e0703n48:396_0": "Cīvaratthaṁ suvatthāni, susaṇhāni ca dāpayi.",
  "anya-e0703n48:397_0": "132.",
  "anya-e0703n48:398_0": "Dubbhikkhe dānasālāyo, kāretvā sabbapāṇinaṁ;",
  "anya-e0703n48:399_0": "Mahādānaṁ pavattesi, mahāpāḷiñca vaḍḍhayi.",
  "anya-e0703n48:400_0": "133.",
  "anya-e0703n48:401_0": "Dadhibhattañca dāpesi, nikāyattayavāsinaṁ;",
  "anya-e0703n48:402_0": "Niccaṁ duggatabhattañca, yāguñceva sakhajjakaṁ.",
  "anya-e0703n48:403_0": "134.",
  "anya-e0703n48:404_0": "Evamādīni puññāni, katvā sovaggiyāni so;",
  "anya-e0703n48:405_0": "Ekādasahi vassehi, gato devasahabyataṁ.",
  "anya-e0703n48:406_0": "135.",
  "anya-e0703n48:407_0": "Tassekādasavassesu, vissaṭṭhaṁ soṇṇameva tu;",
  "anya-e0703n48:408_0": "Ahu satasahassānaṁ, tayo dasahi sammitaṁ.",
  "anya-e0703n48:409_0": "136.",
  "anya-e0703n48:410_0": "Sudujjayaṁ paṇḍunarādhirāja,",
  "anya-e0703n48:411_0": "Mekoparo rohaṇamuggaduggaṁ;",
  "anya-e0703n48:412_0": "Katvā’pi ete savase narindā,",
  "anya-e0703n48:413_0": "Sayaṁ vasaṁ maccumupāgamiṁsu.",
  "anya-e0703n48:414_0": "Sujanappasāda saṁvegatthāya kate mahāvaṁse",
  "anya-e0703n48:415_0": "Rājadvayadīpano nāma",
  "anya-e0703n48:416_0": "Ekūnapaññāsatimo paricchedo."
}