{
  "thig15.1:0.1_0": "Therīgāthā 15.1",
  "thig15.1:0.2_0": "Cattālīsanipāta",
  "thig15.1:0.3_0": "Isidāsītherīgāthā",
  "thig15.1:1.1_0": "Nagaramhi kusumanāme,",
  "thig15.1:1.2_0": "Pāṭaliputtamhi pathaviyā maṇḍe;",
  "thig15.1:1.3_0": "Sakyakulakulīnāyo,",
  "thig15.1:1.4_0": "Dve bhikkhuniyo hi guṇavatiyo.",
  "thig15.1:2.1_0": "Isidāsī tattha ekā,",
  "thig15.1:2.2_0": "Dutiyā bodhīti sīlasampannā ca;",
  "thig15.1:2.3_0": "Jhānajjhāyanaratāyo,",
  "thig15.1:2.4_0": "Bahussutāyo dhutakilesāyo.",
  "thig15.1:3.1_0": "Tā piṇḍāya caritvā,",
  "thig15.1:3.2_0": "Bhattatthaṁ kariya dhotapattāyo;",
  "thig15.1:3.3_0": "Rahitamhi sukhanisinnā,",
  "thig15.1:3.4_0": "Imā girā abbhudīresuṁ.",
  "thig15.1:4.1_0": "“Pāsādikāsi ayye,",
  "thig15.1:4.2_0": "Isidāsi vayopi te aparihīno;",
  "thig15.1:4.3_0": "Kiṁ disvāna byālikaṁ,",
  "thig15.1:4.4_0": "Athāsi nekkhammamanuyuttā”.",
  "thig15.1:5.1_0": "Evamanuyuñjiyamānā sā,",
  "thig15.1:5.2_0": "Rahite dhammadesanākusalā;",
  "thig15.1:5.3_0": "Isidāsī vacanamabravi,",
  "thig15.1:5.4_0": "“Suṇa bodhi yathāmhi pabbajitā”.",
  "thig15.1:6.1_0": "“Ujjeniyā puravare,",
  "thig15.1:6.2_0": "Mayhaṁ pitā sīlasaṁvuto seṭṭhi;",
  "thig15.1:6.3_0": "Tassamhi ekadhītā,",
  "thig15.1:6.4_0": "Piyā manāpā ca dayitā ca.",
  "thig15.1:7.1_0": "Atha me sāketato varakā,",
  "thig15.1:7.2_0": "Āgacchumuttamakulīnā;",
  "thig15.1:7.3_0": "Seṭṭhī pahūtaratano,",
  "thig15.1:7.4_0": "Tassa mamaṁ suṇhamadāsi tāto.",
  "thig15.1:8.1_0": "Sassuyā sasurassa ca,",
  "thig15.1:8.2_0": "Sāyaṁ pātaṁ paṇāmamupagamma;",
  "thig15.1:8.3_0": "Sirasā karomi pāde,",
  "thig15.1:8.4_0": "Vandāmi yathāmhi anusiṭṭhā.",
  "thig15.1:9.1_0": "Yā mayhaṁ sāmikassa,",
  "thig15.1:9.2_0": "Bhaginiyo bhātuno parijano vā;",
  "thig15.1:9.3_0": "Tamekavarakampi disvā,",
  "thig15.1:9.4_0": "Ubbiggā āsanaṁ demi.",
  "thig15.1:10.1_0": "Annena ca pānena ca,",
  "thig15.1:10.2_0": "Khajjena ca yañca tattha sannihitaṁ;",
  "thig15.1:10.3_0": "Chādemi upanayāmi ca,",
  "thig15.1:10.4_0": "Demi ca yaṁ yassa patirūpaṁ.",
  "thig15.1:11.1_0": "Kālena upaṭṭhahitvā,",
  "thig15.1:11.2_0": "Gharaṁ samupagamāmi ummāre;",
  "thig15.1:11.3_0": "Dhovantī hatthapāde,",
  "thig15.1:11.4_0": "Pañjalikā sāmikamupemi.",
  "thig15.1:12.1_0": "Kocchaṁ pasādaṁ añjaniñca,",
  "thig15.1:12.2_0": "Ādāsakañca gaṇhitvā;",
  "thig15.1:12.3_0": "Parikammakārikā viya,",
  "thig15.1:12.4_0": "Sayameva patiṁ vibhūsemi.",
  "thig15.1:13.1_0": "Sayameva odanaṁ sādhayāmi,",
  "thig15.1:13.2_0": "Sayameva bhājanaṁ dhovantī;",
  "thig15.1:13.3_0": "Mātāva ekaputtakaṁ,",
  "thig15.1:13.4_0": "Tathā bhattāraṁ paricarāmi.",
  "thig15.1:14.1_0": "Evaṁ maṁ bhattikataṁ,",
  "thig15.1:14.2_0": "Anurattaṁ kārikaṁ nihatamānaṁ;",
  "thig15.1:14.3_0": "Uṭṭhāyikaṁ analasaṁ,",
  "thig15.1:14.4_0": "Sīlavatiṁ dussate bhattā.",
  "thig15.1:15.1_0": "So mātarañca pitarañca,",
  "thig15.1:15.2_0": "Bhaṇati ‘āpucchahaṁ gamissāmi;",
  "thig15.1:15.3_0": "Isidāsiyā na saha vacchaṁ,",
  "thig15.1:15.4_0": "Ekāgārehaṁ saha vatthuṁ’.",
  "thig15.1:16.1_0": "‘Mā evaṁ putta avaca,",
  "thig15.1:16.2_0": "Isidāsī paṇḍitā paribyattā;",
  "thig15.1:16.3_0": "Uṭṭhāyikā analasā,",
  "thig15.1:16.4_0": "Kiṁ tuyhaṁ na rocate putta’.",
  "thig15.1:17.1_0": "‘Na ca me hiṁsati kiñci,",
  "thig15.1:17.2_0": "Na cahaṁ isidāsiyā saha vacchaṁ;",
  "thig15.1:17.3_0": "Dessāva me alaṁ me,",
  "thig15.1:17.4_0": "Apucchāhaṁ gamissāmi’.",
  "thig15.1:18.1_0": "Tassa vacanaṁ suṇitvā,",
  "thig15.1:18.2_0": "Sassu sasuro ca maṁ apucchiṁsu;",
  "thig15.1:18.3_0": "‘Kissa tayā aparaddhaṁ,",
  "thig15.1:18.4_0": "Bhaṇa vissaṭṭhā yathābhūtaṁ’.",
  "thig15.1:19.1_0": "‘Napihaṁ aparajjhaṁ kiñci,",
  "thig15.1:19.2_0": "Napi hiṁsemi na bhaṇāmi dubbacanaṁ;",
  "thig15.1:19.3_0": "Kiṁ sakkā kātuyye,",
  "thig15.1:19.4_0": "Yaṁ maṁ viddessate bhattā’.",
  "thig15.1:20.1_0": "Te maṁ pitugharaṁ paṭinayiṁsu,",
  "thig15.1:20.2_0": "Vimanā dukhena adhibhūtā;",
  "thig15.1:20.3_0": "Puttamanurakkhamānā,",
  "thig15.1:20.4_0": "‘Jitāmhase rūpiniṁ lakkhiṁ’.",
  "thig15.1:21.1_0": "Atha maṁ adāsi tāto,",
  "thig15.1:21.2_0": "Aḍḍhassa gharamhi dutiyakulikassa;",
  "thig15.1:21.3_0": "Tato upaḍḍhasuṅkena,",
  "thig15.1:21.4_0": "Yena maṁ vindatha seṭṭhi.",
  "thig15.1:22.1_0": "Tassapi gharamhi māsaṁ,",
  "thig15.1:22.2_0": "Avasiṁ atha sopi maṁ paṭiccharayi;",
  "thig15.1:22.3_0": "Dāsīva upaṭṭhahantiṁ,",
  "thig15.1:22.4_0": "Adūsikaṁ sīlasampannaṁ.",
  "thig15.1:23.1_0": "Bhikkhāya ca vicarantaṁ,",
  "thig15.1:23.2_0": "Damakaṁ dantaṁ me pitā bhaṇati;",
  "thig15.1:23.3_0": "‘Hohisi me jāmātā,",
  "thig15.1:23.4_0": "Nikkhipa poṭṭhiñca ghaṭikañca’.",
  "thig15.1:24.1_0": "Sopi vasitvā pakkhaṁ,",
  "thig15.1:24.2_0": "Atha tātaṁ bhaṇati ‘dehi me poṭṭhiṁ;",
  "thig15.1:24.3_0": "Ghaṭikañca mallakañca,",
  "thig15.1:24.4_0": "Punapi bhikkhaṁ carissāmi’.",
  "thig15.1:25.1_0": "Atha naṁ bhaṇatī tāto,",
  "thig15.1:25.2_0": "Ammā sabbo ca me ñātigaṇavaggo;",
  "thig15.1:25.3_0": "‘Kiṁ te na kīrati idha,",
  "thig15.1:25.4_0": "Bhaṇa khippaṁ taṁ te karihi’ti.",
  "thig15.1:26.1_0": "Evaṁ bhaṇito bhaṇati,",
  "thig15.1:26.2_0": "‘Yadi me attā sakkoti alaṁ mayhaṁ;",
  "thig15.1:26.3_0": "Isidāsiyā na saha vacchaṁ,",
  "thig15.1:26.4_0": "Ekagharehaṁ saha vatthuṁ’.",
  "thig15.1:27.1_0": "Vissajjito gato so,",
  "thig15.1:27.2_0": "Ahampi ekākinī vicintemi;",
  "thig15.1:27.3_0": "‘Āpucchitūna gacchaṁ,",
  "thig15.1:27.4_0": "Marituye vā pabbajissaṁ vā’.",
  "thig15.1:28.1_0": "Atha ayyā jinadattā,",
  "thig15.1:28.2_0": "Āgacchī gocarāya caramānā;",
  "thig15.1:28.3_0": "Tātakulaṁ vinayadharī,",
  "thig15.1:28.4_0": "Bahussutā sīlasampannā.",
  "thig15.1:29.1_0": "Taṁ disvāna amhākaṁ,",
  "thig15.1:29.2_0": "Uṭṭhāyāsanaṁ tassā paññāpayiṁ;",
  "thig15.1:29.3_0": "Nisinnāya ca pāde,",
  "thig15.1:29.4_0": "Vanditvā bhojanamadāsiṁ.",
  "thig15.1:30.1_0": "Annena ca pānena ca,",
  "thig15.1:30.2_0": "Khajjena ca yañca tattha sannihitaṁ;",
  "thig15.1:30.3_0": "Santappayitvā avacaṁ,",
  "thig15.1:30.4_0": "‘Ayye icchāmi pabbajituṁ’.",
  "thig15.1:31.1_0": "Atha maṁ bhaṇatī tāto,",
  "thig15.1:31.2_0": "‘Idheva puttaka carāhi tvaṁ dhammaṁ;",
  "thig15.1:31.3_0": "Annena ca pānena ca,",
  "thig15.1:31.4_0": "Tappaya samaṇe dvijātī ca’.",
  "thig15.1:32.1_0": "Athahaṁ bhaṇāmi tātaṁ,",
  "thig15.1:32.2_0": "Rodantī añjaliṁ paṇāmetvā;",
  "thig15.1:32.3_0": "‘Pāpañhi mayā pakataṁ,",
  "thig15.1:32.4_0": "Kammaṁ taṁ nijjaressāmi’.",
  "thig15.1:33.1_0": "Atha maṁ bhaṇatī tāto,",
  "thig15.1:33.2_0": "‘Pāpuṇa bodhiñca aggadhammañca;",
  "thig15.1:33.3_0": "Nibbānañca labhassu,",
  "thig15.1:33.4_0": "Yaṁ sacchikarī dvipadaseṭṭho’.",
  "thig15.1:34.1_0": "Mātāpitū abhivādayitvā,",
  "thig15.1:34.2_0": "Sabbañca ñātigaṇavaggaṁ;",
  "thig15.1:34.3_0": "Sattāhaṁ pabbajitā,",
  "thig15.1:34.4_0": "Tisso vijjā aphassayiṁ.",
  "thig15.1:35.1_0": "Jānāmi attano satta,",
  "thig15.1:35.2_0": "Jātiyo yassayaṁ phalavipāko;",
  "thig15.1:35.3_0": "Taṁ tava ācikkhissaṁ,",
  "thig15.1:35.4_0": "Taṁ ekamanā nisāmehi.",
  "thig15.1:36.1_0": "Nagaramhi erakacche,",
  "thig15.1:36.2_0": "Suvaṇṇakāro ahaṁ pahūtadhano;",
  "thig15.1:36.3_0": "Yobbanamadena matto,",
  "thig15.1:36.4_0": "So paradāraṁ asevihaṁ.",
  "thig15.1:37.1_0": "Sohaṁ tato cavitvā,",
  "thig15.1:37.2_0": "Nirayamhi apaccisaṁ ciraṁ;",
  "thig15.1:37.3_0": "Pakko tato ca uṭṭhahitvā,",
  "thig15.1:37.4_0": "Makkaṭiyā kucchimokkamiṁ.",
  "thig15.1:38.1_0": "Sattāhajātakaṁ maṁ,",
  "thig15.1:38.2_0": "Mahākapi yūthapo nillacchesi;",
  "thig15.1:38.3_0": "Tassetaṁ kammaphalaṁ,",
  "thig15.1:38.4_0": "Yathāpi gantvāna paradāraṁ.",
  "thig15.1:39.1_0": "Sohaṁ tato cavitvā,",
  "thig15.1:39.2_0": "Kālaṁ karitvā sindhavāraññe;",
  "thig15.1:39.3_0": "Kāṇāya ca khañjāya ca,",
  "thig15.1:39.4_0": "Eḷakiyā kucchimokkamiṁ.",
  "thig15.1:40.1_0": "Dvādasa vassāni ahaṁ,",
  "thig15.1:40.2_0": "Nillacchito dārake parivahitvā;",
  "thig15.1:40.3_0": "Kimināvaṭṭo akallo,",
  "thig15.1:40.4_0": "Yathāpi gantvāna paradāraṁ.",
  "thig15.1:41.1_0": "Sohaṁ tato cavitvā,",
  "thig15.1:41.2_0": "Govāṇijakassa gāviyā jāto;",
  "thig15.1:41.3_0": "Vaccho lākhātambo,",
  "thig15.1:41.4_0": "Nillacchito dvādase māse.",
  "thig15.1:42.1_0": "Voḍhūna naṅgalamahaṁ,",
  "thig15.1:42.2_0": "Sakaṭañca dhārayāmi;",
  "thig15.1:42.3_0": "Andhovaṭṭo akallo,",
  "thig15.1:42.4_0": "Yathāpi gantvāna paradāraṁ.",
  "thig15.1:43.1_0": "Sohaṁ tato cavitvā,",
  "thig15.1:43.2_0": "Vīthiyā dāsiyā ghare jāto;",
  "thig15.1:43.3_0": "Neva mahilā na puriso,",
  "thig15.1:43.4_0": "Yathāpi gantvāna paradāraṁ.",
  "thig15.1:44.1_0": "Tiṁsativassamhi mato,",
  "thig15.1:44.2_0": "Sākaṭikakulamhi dārikā jātā;",
  "thig15.1:44.3_0": "Kapaṇamhi appabhoge,",
  "thig15.1:44.4_0": "Dhanika purisapātabahulamhi.",
  "thig15.1:45.1_0": "Taṁ maṁ tato satthavāho,",
  "thig15.1:45.2_0": "Ussannāya vipulāya vaḍḍhiyā;",
  "thig15.1:45.3_0": "Okaḍḍhati vilapantiṁ,",
  "thig15.1:45.4_0": "Acchinditvā kulagharasmā.",
  "thig15.1:46.1_0": "Atha soḷasame vasse,",
  "thig15.1:46.2_0": "Disvā maṁ pattayobbanaṁ kaññaṁ;",
  "thig15.1:46.3_0": "Orundhatassa putto,",
  "thig15.1:46.4_0": "Giridāso nāma nāmena.",
  "thig15.1:47.1_0": "Tassapi aññā bhariyā,",
  "thig15.1:47.2_0": "Sīlavatī guṇavatī yasavatī ca;",
  "thig15.1:47.3_0": "Anurattā bhattāraṁ,",
  "thig15.1:47.4_0": "Tassāhaṁ viddesanamakāsiṁ.",
  "thig15.1:48.1_0": "Tassetaṁ kammaphalaṁ,",
  "thig15.1:48.2_0": "Yaṁ maṁ apakīritūna gacchanti;",
  "thig15.1:48.3_0": "Dāsīva upaṭṭhahantiṁ,",
  "thig15.1:48.4_0": "Tassapi anto kato mayā”ti.",
  "thig15.1:49.1_0": "… Isidāsī therī ….",
  "thig15.1:50.1_0": "Cattālīsanipāto niṭṭhito."
}