{
  "thig2.8:0.1_0": "Therīgāthā 2.8",
  "thig2.8:0.2_0": "Dukanipāta",
  "thig2.8:0.3_0": "Abhayamātutherīgāthā",
  "thig2.8:1.1_0": "“Uddhaṁ pādatalā amma,",
  "thig2.8:1.2_0": "adho ve kesamatthakā;",
  "thig2.8:1.3_0": "Paccavekkhassumaṁ kāyaṁ,",
  "thig2.8:1.4_0": "asuciṁ pūtigandhikaṁ.",
  "thig2.8:2.1_0": "Evaṁ viharamānāya,",
  "thig2.8:2.2_0": "sabbo rāgo samūhato;",
  "thig2.8:2.3_0": "Pariḷāho samucchinno,",
  "thig2.8:2.4_0": "sītibhūtāmhi nibbutā”ti.",
  "thig2.8:3.1_0": "… Abhayamātā therī …."
}