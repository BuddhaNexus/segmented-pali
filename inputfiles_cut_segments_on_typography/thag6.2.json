{
  "thag6.2:0.1_0": "Theragāthā 6.2",
  "thag6.2:0.2_0": "Chakkanipāta",
  "thag6.2:0.3_0": "Paṭhamavagga",
  "thag6.2:0.4_0": "Tekicchakārittheragāthā",
  "thag6.2:1.1_0": "“Atihitā vīhi,",
  "thag6.2:1.2_0": "khalagatā sālī;",
  "thag6.2:1.3_0": "Na ca labhe piṇḍaṁ,",
  "thag6.2:1.4_0": "kathamahaṁ kassaṁ”.",
  "thag6.2:2.1_0": "“Buddhamappameyyaṁ anussara pasanno,",
  "thag6.2:2.2_0": "Pītiyā phuṭasarīro hohisi satatamudaggo.",
  "thag6.2:3.1_0": "Dhammamappameyyaṁ anussara pasanno,",
  "thag6.2:3.2_0": "Pītiyā phuṭasarīro hohisi satatamudaggo.",
  "thag6.2:4.1_0": "Saṅghamappameyyaṁ anussara pasanno,",
  "thag6.2:4.2_0": "Pītiyā phuṭasarīro hohisi satatamudaggo”.",
  "thag6.2:5.1_0": "“Abbhokāse viharasi,",
  "thag6.2:5.2_0": "Sītā hemantikā imā ratyo;",
  "thag6.2:5.3_0": "Mā sītena pareto vihaññittho,",
  "thag6.2:5.4_0": "Pavisa tvaṁ vihāraṁ phusitaggaḷaṁ”.",
  "thag6.2:6.1_0": "“Phusissaṁ catasso appamaññāyo,",
  "thag6.2:6.2_0": "Tāhi ca sukhito viharissaṁ;",
  "thag6.2:6.3_0": "Nāhaṁ sītena vihaññissaṁ,",
  "thag6.2:6.4_0": "Aniñjito viharanto”ti.",
  "thag6.2:6.5_0": "… Tekicchakārī thero …."
}