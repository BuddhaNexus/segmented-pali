{
  "tha-ap363:0.1_0": "Therāpadāna",
  "tha-ap363:0.2_0": "Mandāravapupphiyavagga",
  "tha-ap363:0.3_0": "1 Mandāravapupphiyattheraapadāna",
  "tha-ap363:1.1_0": "“Tāvatiṁsā idhāgantvā,",
  "tha-ap363:1.2_0": "maṅgalo nāma māṇavo;",
  "tha-ap363:1.3_0": "Mandāravaṁ gahetvāna,",
  "tha-ap363:1.4_0": "vipassissa mahesino.",
  "tha-ap363:2.1_0": "Samādhinā nisinnassa,",
  "tha-ap363:2.2_0": "matthake dhārayiṁ ahaṁ;",
  "tha-ap363:2.3_0": "Sattāhaṁ dhārayitvāna,",
  "tha-ap363:2.4_0": "devalokaṁ punāgamiṁ.",
  "tha-ap363:3.1_0": "Ekanavutito kappe,",
  "tha-ap363:3.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap363:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap363:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap363:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap363:4.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap363:4.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap363:4.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap363:5.1_0": "Itthaṁ sudaṁ āyasmā mandāravapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap363:6.1_0": "Mandāravapupphiyattherassāpadānaṁ paṭhamaṁ."
}