{
  "thag16.2:0.1_0": "Theragāthā 16.2",
  "thag16.2:0.2_0": "Vīsatinipāta",
  "thag16.2:0.3_0": "Paṭhamavagga",
  "thag16.2:0.4_0": "Pārāpariyattheragāthā",
  "thag16.2:1.1_0": "“Samaṇassa ahu cintā,",
  "thag16.2:1.2_0": "pārāpariyassa bhikkhuno;",
  "thag16.2:1.3_0": "Ekakassa nisinnassa,",
  "thag16.2:1.4_0": "pavivittassa jhāyino.",
  "thag16.2:2.1_0": "Kimānupubbaṁ puriso,",
  "thag16.2:2.2_0": "kiṁ vataṁ kiṁ samācāraṁ;",
  "thag16.2:2.3_0": "Attano kiccakārīssa,",
  "thag16.2:2.4_0": "na ca kañci viheṭhaye.",
  "thag16.2:3.1_0": "Indriyāni manussānaṁ,",
  "thag16.2:3.2_0": "hitāya ahitāya ca;",
  "thag16.2:3.3_0": "Arakkhitāni ahitāya,",
  "thag16.2:3.4_0": "rakkhitāni hitāya ca.",
  "thag16.2:4.1_0": "Indriyāneva sārakkhaṁ,",
  "thag16.2:4.2_0": "indriyāni ca gopayaṁ;",
  "thag16.2:4.3_0": "Attano kiccakārīssa,",
  "thag16.2:4.4_0": "na ca kañci viheṭhaye.",
  "thag16.2:5.1_0": "Cakkhundriyañce rūpesu,",
  "thag16.2:5.2_0": "gacchantaṁ anivārayaṁ;",
  "thag16.2:5.3_0": "Anādīnavadassāvī,",
  "thag16.2:5.4_0": "so dukkhā na hi muccati.",
  "thag16.2:6.1_0": "Sotindriyañce saddesu,",
  "thag16.2:6.2_0": "gacchantaṁ anivārayaṁ;",
  "thag16.2:6.3_0": "Anādīnavadassāvī,",
  "thag16.2:6.4_0": "so dukkhā na hi muccati.",
  "thag16.2:7.1_0": "Anissaraṇadassāvī,",
  "thag16.2:7.2_0": "gandhe ce paṭisevati;",
  "thag16.2:7.3_0": "Na so muccati dukkhamhā,",
  "thag16.2:7.4_0": "gandhesu adhimucchito.",
  "thag16.2:8.1_0": "Ambilaṁ madhuraggañca,",
  "thag16.2:8.2_0": "tittakaggamanussaraṁ;",
  "thag16.2:8.3_0": "Rasataṇhāya gadhito,",
  "thag16.2:8.4_0": "hadayaṁ nāvabujjhati.",
  "thag16.2:9.1_0": "Subhānyappaṭikūlāni,",
  "thag16.2:9.2_0": "phoṭṭhabbāni anussaraṁ;",
  "thag16.2:9.3_0": "Ratto rāgādhikaraṇaṁ,",
  "thag16.2:9.4_0": "vividhaṁ vindate dukhaṁ.",
  "thag16.2:10.1_0": "Manaṁ cetehi dhammehi,",
  "thag16.2:10.2_0": "yo na sakkoti rakkhituṁ;",
  "thag16.2:10.3_0": "Tato naṁ dukkhamanveti,",
  "thag16.2:10.4_0": "sabbehetehi pañcahi.",
  "thag16.2:11.1_0": "Pubbalohitasampuṇṇaṁ,",
  "thag16.2:11.2_0": "bahussa kuṇapassa ca;",
  "thag16.2:11.3_0": "Naravīrakataṁ vagguṁ,",
  "thag16.2:11.4_0": "samuggamiva cittitaṁ.",
  "thag16.2:12.1_0": "Kaṭukaṁ madhurassādaṁ,",
  "thag16.2:12.2_0": "piyanibandhanaṁ dukhaṁ;",
  "thag16.2:12.3_0": "Khuraṁva madhunā littaṁ,",
  "thag16.2:12.4_0": "ullihaṁ nāvabujjhati.",
  "thag16.2:13.1_0": "Itthirūpe itthisare,",
  "thag16.2:13.2_0": "phoṭṭhabbepi ca itthiyā;",
  "thag16.2:13.3_0": "Itthigandhesu sāratto,",
  "thag16.2:13.4_0": "vividhaṁ vindate dukhaṁ.",
  "thag16.2:14.1_0": "Itthisotāni sabbāni,",
  "thag16.2:14.2_0": "sandanti pañca pañcasu;",
  "thag16.2:14.3_0": "Tesamāvaraṇaṁ kātuṁ,",
  "thag16.2:14.4_0": "yo sakkoti vīriyavā.",
  "thag16.2:15.1_0": "So atthavā so dhammaṭṭho,",
  "thag16.2:15.2_0": "so dakkho so vicakkhaṇo;",
  "thag16.2:15.3_0": "Kareyya ramamānopi,",
  "thag16.2:15.4_0": "kiccaṁ dhammatthasaṁhitaṁ.",
  "thag16.2:16.1_0": "Atho sīdati saññuttaṁ,",
  "thag16.2:16.2_0": "vajje kiccaṁ niratthakaṁ;",
  "thag16.2:16.3_0": "‘Na taṁ kiccan’ti maññitvā,",
  "thag16.2:16.4_0": "appamatto vicakkhaṇo.",
  "thag16.2:17.1_0": "Yañca atthena saññuttaṁ,",
  "thag16.2:17.2_0": "yā ca dhammagatā rati;",
  "thag16.2:17.3_0": "Taṁ samādāya vattetha,",
  "thag16.2:17.4_0": "sā hi ve uttamā rati.",
  "thag16.2:18.1_0": "Uccāvacehupāyehi,",
  "thag16.2:18.2_0": "Paresamabhijigīsati;",
  "thag16.2:18.3_0": "Hantvā vadhitvā atha socayitvā,",
  "thag16.2:18.4_0": "Ālopati sāhasā yo paresaṁ.",
  "thag16.2:19.1_0": "Tacchanto āṇiyā āṇiṁ,",
  "thag16.2:19.2_0": "nihanti balavā yathā;",
  "thag16.2:19.3_0": "Indriyānindriyeheva,",
  "thag16.2:19.4_0": "nihanti kusalo tathā.",
  "thag16.2:20.1_0": "Saddhaṁ vīriyaṁ samādhiñca,",
  "thag16.2:20.2_0": "satipaññañca bhāvayaṁ;",
  "thag16.2:20.3_0": "Pañca pañcahi hantvāna,",
  "thag16.2:20.4_0": "anīgho yāti brāhmaṇo.",
  "thag16.2:21.1_0": "So atthavā so dhammaṭṭho,",
  "thag16.2:21.2_0": "katvā vākyānusāsaniṁ;",
  "thag16.2:21.3_0": "Sabbena sabbaṁ buddhassa,",
  "thag16.2:21.4_0": "so naro sukhamedhatī”ti.",
  "thag16.2:21.5_0": "… Pārāpariyo thero …."
}