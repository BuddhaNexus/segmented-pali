{
  "thag3.13:0.1_0": "Theragāthā 3.13",
  "thag3.13:0.2_0": "Tikanipāta",
  "thag3.13:0.3_0": "Paṭhamavagga",
  "thag3.13:0.4_0": "Abhibhūtattheragāthā",
  "thag3.13:1.1_0": "“Suṇātha ñātayo sabbe,",
  "thag3.13:1.2_0": "yāvantettha samāgatā;",
  "thag3.13:1.3_0": "Dhammaṁ vo desayissāmi,",
  "thag3.13:1.4_0": "dukkhā jāti punappunaṁ.",
  "thag3.13:2.1_0": "Ārambhatha nikkamatha,",
  "thag3.13:2.2_0": "Yuñjatha buddhasāsane;",
  "thag3.13:2.3_0": "Dhunātha maccuno senaṁ,",
  "thag3.13:2.4_0": "Naḷāgāraṁva kuñjaro.",
  "thag3.13:3.1_0": "Yo imasmiṁ dhammavinaye,",
  "thag3.13:3.2_0": "appamatto vihassati;",
  "thag3.13:3.3_0": "Pahāya jātisaṁsāraṁ,",
  "thag3.13:3.4_0": "dukkhassantaṁ karissatī”ti.",
  "thag3.13:3.5_0": "… Abhibhūto thero …."
}