{
  "sn10:1.0.1_0": "Saṁyutta Nikāya 10.1",
  "sn10:1.0.2_0": "1. Indakavagga",
  "sn10:1.0.3_0": "Indakasutta",
  "sn10:1.1.1_0": "Evaṁ me sutaṁ—",
  "sn10:1.1.2_0": "ekaṁ samayaṁ bhagavā rājagahe viharati indakūṭe pabbate, indakassa yakkhassa bhavane.",
  "sn10:1.1.3_0": "Atha kho indako yakkho yena bhagavā tenupasaṅkami; upasaṅkamitvā bhagavantaṁ gāthāya ajjhabhāsi:",
  "sn10:1.2.1_0": "“Rūpaṁ na jīvanti vadanti buddhā,",
  "sn10:1.2.2_0": "Kathaṁ nvayaṁ vindatimaṁ sarīraṁ;",
  "sn10:1.2.3_0": "Kutassa aṭṭhīyakapiṇḍameti,",
  "sn10:1.2.4_0": "Kathaṁ nvayaṁ sajjati gabbharasmin”ti.",
  "sn10:1.3.1_0": "“Paṭhamaṁ kalalaṁ hoti,",
  "sn10:1.3.2_0": "kalalā hoti abbudaṁ;",
  "sn10:1.3.3_0": "Abbudā jāyate pesi,",
  "sn10:1.3.4_0": "pesi nibbattatī ghano;",
  "sn10:1.3.5_0": "Ghanā pasākhā jāyanti,",
  "sn10:1.3.6_0": "kesā lomā nakhāpi ca.",
  "sn10:1.4.1_0": "Yañcassa bhuñjatī mātā,",
  "sn10:1.4.2_0": "annaṁ pānañca bhojanaṁ;",
  "sn10:1.4.3_0": "Tena so tattha yāpeti,",
  "sn10:1.4.4_0": "mātukucchigato naro”ti.",
  "sn10:2.0.1_0": "Saṁyutta Nikāya 10.2",
  "sn10:2.0.2_0": "1. Indakavagga",
  "sn10:2.0.3_0": "Sakkanāmasutta",
  "sn10:2.1.1_0": "Ekaṁ samayaṁ bhagavā rājagahe viharati gijjhakūṭe pabbate.",
  "sn10:2.1.2_0": "Atha kho sakkanāmako yakkho yena bhagavā tenupasaṅkami;",
  "sn10:2.1.2_1": "upasaṅkamitvā bhagavantaṁ gāthāya ajjhabhāsi:",
  "sn10:2.2.1_0": "“Sabbaganthappahīnassa,",
  "sn10:2.2.2_0": "vippamuttassa te sato;",
  "sn10:2.2.3_0": "Samaṇassa na taṁ sādhu,",
  "sn10:2.2.4_0": "yadaññamanusāsasī”ti.",
  "sn10:2.3.1_0": "“Yena kenaci vaṇṇena,",
  "sn10:2.3.2_0": "saṁvāso sakka jāyati;",
  "sn10:2.3.3_0": "Na taṁ arahati sappañño,",
  "sn10:2.3.4_0": "manasā anukampituṁ.",
  "sn10:2.4.1_0": "Manasā ce pasannena,",
  "sn10:2.4.2_0": "yadaññamanusāsati;",
  "sn10:2.4.3_0": "Na tena hoti saṁyutto,",
  "sn10:2.4.4_0": "yānukampā anuddayā”ti.",
  "sn10:3.0.1_0": "Saṁyutta Nikāya 10.3",
  "sn10:3.0.2_0": "1. Indakavagga",
  "sn10:3.0.3_0": "Sūcilomasutta",
  "sn10:3.1.1_0": "Ekaṁ samayaṁ bhagavā gayāyaṁ viharati ṭaṅkitamañce sūcilomassa yakkhassa bhavane.",
  "sn10:3.1.2_0": "Tena kho pana samayena kharo ca yakkho sūcilomo ca yakkho bhagavato avidūre atikkamanti.",
  "sn10:3.1.3_0": "Atha kho kharo yakkho sūcilomaṁ yakkhaṁ etadavoca:",
  "sn10:3.1.4_0": "“eso samaṇo”ti.",
  "sn10:3.1.5_0": "“Neso samaṇo, samaṇako eso.",
  "sn10:3.1.6_0": "Yāva jānāmi yadi vā so samaṇo yadi vā pana so samaṇako”ti.",
  "sn10:3.2.1_0": "Atha kho sūcilomo yakkho yena bhagavā tenupasaṅkami; upasaṅkamitvā bhagavato kāyaṁ upanāmesi.",
  "sn10:3.2.2_0": "Atha kho bhagavā kāyaṁ apanāmesi.",
  "sn10:3.2.3_0": "Atha kho sūcilomo yakkho bhagavantaṁ etadavoca:",
  "sn10:3.2.4_0": "“bhāyasi maṁ, samaṇā”ti?",
  "sn10:3.2.5_0": "“Na khvāhaṁ taṁ, āvuso, bhāyāmi;",
  "sn10:3.2.6_0": "api ca te samphasso pāpako”ti.",
  "sn10:3.2.7_0": "“Pañhaṁ taṁ, samaṇa, pucchissāmi.",
  "sn10:3.2.8_0": "Sace me na byākarissasi,",
  "sn10:3.2.8_1": "cittaṁ vā te khipissāmi,",
  "sn10:3.2.8_2": "hadayaṁ vā te phālessāmi,",
  "sn10:3.2.8_3": "pādesu vā gahetvā pāragaṅgāya khipissāmī”ti.",
  "sn10:3.2.9_0": "“Na khvāhaṁ taṁ, āvuso,",
  "sn10:3.2.9_1": "passāmi sadevake loke samārake sabrahmake sassamaṇabrāhmaṇiyā pajāya sadevamanussāya,",
  "sn10:3.2.9_2": "yo me cittaṁ vā khipeyya hadayaṁ vā phāleyya pādesu vā gahetvā pāragaṅgāya khipeyya;",
  "sn10:3.2.10_0": "api ca tvaṁ, āvuso, puccha yadā kaṅkhasī”ti. (…)",
  "sn10:3.3.1_0": "“Rāgo ca doso ca kutonidānā,",
  "sn10:3.3.2_0": "Aratī ratī lomahaṁso kutojā;",
  "sn10:3.3.3_0": "Kuto samuṭṭhāya manovitakkā,",
  "sn10:3.3.4_0": "Kumārakā dhaṅkamivossajantī”ti.",
  "sn10:3.4.1_0": "“Rāgo ca doso ca itonidānā,",
  "sn10:3.4.2_0": "Aratī ratī lomahaṁso itojā;",
  "sn10:3.4.3_0": "Ito samuṭṭhāya manovitakkā,",
  "sn10:3.4.4_0": "Kumārakā dhaṅkamivossajanti.",
  "sn10:3.5.1_0": "Snehajā attasambhūtā,",
  "sn10:3.5.2_0": "nigrodhasseva khandhajā;",
  "sn10:3.5.3_0": "Puthū visattā kāmesu,",
  "sn10:3.5.4_0": "māluvāva vitatā vane.",
  "sn10:3.6.1_0": "Ye naṁ pajānanti yatonidānaṁ,",
  "sn10:3.6.2_0": "Te naṁ vinodenti suṇohi yakkha;",
  "sn10:3.6.3_0": "Te duttaraṁ oghamimaṁ taranti,",
  "sn10:3.6.4_0": "Atiṇṇapubbaṁ apunabbhavāyā”ti.",
  "sn10:4.0.1_0": "Saṁyutta Nikāya 10.4",
  "sn10:4.0.2_0": "1. Indakavagga",
  "sn10:4.0.3_0": "Maṇibhaddasutta",
  "sn10:4.1.1_0": "Ekaṁ samayaṁ bhagavā magadhesu viharati maṇimālike cetiye maṇibhaddassa yakkhassa bhavane.",
  "sn10:4.1.2_0": "Atha kho maṇibhaddo yakkho yena bhagavā tenupasaṅkami;",
  "sn10:4.1.2_1": "upasaṅkamitvā bhagavato santike imaṁ gāthaṁ abhāsi:",
  "sn10:4.2.1_0": "“Satīmato sadā bhaddaṁ,",
  "sn10:4.2.2_0": "satimā sukhamedhati;",
  "sn10:4.2.3_0": "Satīmato suve seyyo,",
  "sn10:4.2.4_0": "verā ca parimuccatī”ti.",
  "sn10:4.3.1_0": "“Satīmato sadā bhaddaṁ,",
  "sn10:4.3.2_0": "satimā sukhamedhati;",
  "sn10:4.3.3_0": "Satīmato suve seyyo,",
  "sn10:4.3.4_0": "verā na parimuccati.",
  "sn10:4.4.1_0": "Yassa sabbamahorattaṁ,",
  "sn10:4.4.2_0": "ahiṁsāya rato mano;",
  "sn10:4.4.3_0": "Mettaṁso sabbabhūtesu,",
  "sn10:4.4.4_0": "veraṁ tassa na kenacī”ti.",
  "sn10:5.0.1_0": "Saṁyutta Nikāya 10.5",
  "sn10:5.0.2_0": "1. Indakavagga",
  "sn10:5.0.3_0": "Sānusutta",
  "sn10:5.1.1_0": "Ekaṁ samayaṁ bhagavā sāvatthiyaṁ viharati jetavane anāthapiṇḍikassa ārāme.",
  "sn10:5.1.2_0": "Tena kho pana samayena aññatarissā upāsikāya sānu nāma putto yakkhena gahito hoti.",
  "sn10:5.1.3_0": "Atha kho sā upāsikā paridevamānā tāyaṁ velāyaṁ imā gāthāyo abhāsi:",
  "sn10:5.2.1_0": "“Cātuddasiṁ pañcadasiṁ,",
  "sn10:5.2.2_0": "yā ca pakkhassa aṭṭhamī;",
  "sn10:5.2.3_0": "Pāṭihāriyapakkhañca,",
  "sn10:5.2.4_0": "aṭṭhaṅgasusamāgataṁ.",
  "sn10:5.3.1_0": "Uposathaṁ upavasanti,",
  "sn10:5.3.2_0": "brahmacariyaṁ caranti ye;",
  "sn10:5.3.3_0": "Na tehi yakkhā kīḷanti,",
  "sn10:5.3.4_0": "iti me arahataṁ sutaṁ;",
  "sn10:5.3.5_0": "Sā dāni ajja passāmi,",
  "sn10:5.3.6_0": "yakkhā kīḷanti sānunā”ti.",
  "sn10:5.4.1_0": "“Cātuddasiṁ pañcadasiṁ,",
  "sn10:5.4.2_0": "yā ca pakkhassa aṭṭhamī;",
  "sn10:5.4.3_0": "Pāṭihāriyapakkhañca,",
  "sn10:5.4.4_0": "aṭṭhaṅgasusamāgataṁ;",
  "sn10:5.5.1_0": "Uposathaṁ upavasanti,",
  "sn10:5.5.2_0": "brahmacariyaṁ caranti ye.",
  "sn10:5.5.3_0": "Na tehi yakkhā kīḷanti,",
  "sn10:5.5.4_0": "sāhu te arahataṁ sutaṁ;",
  "sn10:5.6.1_0": "Sānuṁ pabuddhaṁ vajjāsi,",
  "sn10:5.6.2_0": "yakkhānaṁ vacanaṁ idaṁ;",
  "sn10:5.6.3_0": "Mākāsi pāpakaṁ kammaṁ,",
  "sn10:5.6.4_0": "āvi vā yadi vā raho.",
  "sn10:5.7.1_0": "Sace ca pāpakaṁ kammaṁ,",
  "sn10:5.7.2_0": "karissasi karosi vā;",
  "sn10:5.7.3_0": "Na te dukkhā pamutyatthi,",
  "sn10:5.7.4_0": "uppaccāpi palāyato”ti.",
  "sn10:5.8.1_0": "“Mataṁ vā amma rodanti,",
  "sn10:5.8.2_0": "yo vā jīvaṁ na dissati;",
  "sn10:5.8.3_0": "Jīvantaṁ amma passantī,",
  "sn10:5.8.4_0": "kasmā maṁ amma rodasī”ti.",
  "sn10:5.9.1_0": "“Mataṁ vā putta rodanti,",
  "sn10:5.9.2_0": "yo vā jīvaṁ na dissati;",
  "sn10:5.9.3_0": "Yo ca kāme cajitvāna,",
  "sn10:5.9.4_0": "punarāgacchate idha;",
  "sn10:5.9.5_0": "Taṁ vāpi putta rodanti,",
  "sn10:5.9.6_0": "puna jīvaṁ mato hi so.",
  "sn10:5.10.1_0": "Kukkuḷā ubbhato tāta,",
  "sn10:5.10.2_0": "kukkuḷaṁ patitumicchasi;",
  "sn10:5.10.3_0": "Narakā ubbhato tāta,",
  "sn10:5.10.4_0": "narakaṁ patitumicchasi.",
  "sn10:5.11.1_0": "Abhidhāvatha bhaddante,",
  "sn10:5.11.2_0": "kassa ujjhāpayāmase;",
  "sn10:5.11.3_0": "Ādittā nīhataṁ bhaṇḍaṁ,",
  "sn10:5.11.4_0": "puna ḍayhitumicchasī”ti.",
  "sn10:6.0.1_0": "Saṁyutta Nikāya 10.6",
  "sn10:6.0.2_0": "1. Indakavagga",
  "sn10:6.0.3_0": "Piyaṅkarasutta",
  "sn10:6.1.1_0": "Ekaṁ samayaṁ āyasmā anuruddho sāvatthiyaṁ viharati jetavane anāthapiṇḍikassa ārāme.",
  "sn10:6.1.2_0": "Tena kho pana samayena āyasmā anuruddho rattiyā paccūsasamayaṁ paccuṭṭhāya dhammapadāni bhāsati.",
  "sn10:6.1.3_0": "Atha kho piyaṅkaramātā yakkhinī puttakaṁ evaṁ tosesi:",
  "sn10:6.2.1_0": "“Mā saddaṁ kari piyaṅkara,",
  "sn10:6.2.2_0": "Bhikkhu dhammapadāni bhāsati;",
  "sn10:6.2.3_0": "Api ca dhammapadaṁ vijāniya,",
  "sn10:6.2.4_0": "Paṭipajjema hitāya no siyā.",
  "sn10:6.3.1_0": "Pāṇesu ca saṁyamāmase,",
  "sn10:6.3.2_0": "Sampajānamusā na bhaṇāmase;",
  "sn10:6.3.3_0": "Sikkhema susīlyamattano,",
  "sn10:6.3.4_0": "Api muccema pisācayoniyā”ti.",
  "sn10:7.0.1_0": "Saṁyutta Nikāya 10.7",
  "sn10:7.0.2_0": "1. Indakavagga",
  "sn10:7.0.3_0": "Punabbasusutta",
  "sn10:7.1.1_0": "Ekaṁ samayaṁ bhagavā sāvatthiyaṁ viharati jetavane anāthapiṇḍikassa ārāme.",
  "sn10:7.1.2_0": "Tena kho pana samayena bhagavā bhikkhū nibbānapaṭisaṁyuttāya dhammiyā kathāya sandasseti samādapeti samuttejeti sampahaṁseti.",
  "sn10:7.1.3_0": "Te ca bhikkhū aṭṭhiṁ katvā manasi katvā sabbacetasā samannāharitvā ohitasotā dhammaṁ suṇanti.",
  "sn10:7.1.4_0": "Atha kho punabbasumātā yakkhinī puttake evaṁ tosesi:",
  "sn10:7.2.1_0": "“Tuṇhī uttarike hohi,",
  "sn10:7.2.2_0": "tuṇhī hohi punabbasu;",
  "sn10:7.2.3_0": "Yāvāhaṁ buddhaseṭṭhassa,",
  "sn10:7.2.4_0": "dhammaṁ sossāmi satthuno.",
  "sn10:7.3.1_0": "Nibbānaṁ bhagavā āha,",
  "sn10:7.3.2_0": "sabbaganthappamocanaṁ;",
  "sn10:7.3.3_0": "Ativelā ca me hoti,",
  "sn10:7.3.4_0": "asmiṁ dhamme piyāyanā.",
  "sn10:7.4.1_0": "Piyo loke sako putto,",
  "sn10:7.4.2_0": "piyo loke sako pati;",
  "sn10:7.4.3_0": "Tato piyatarā mayhaṁ,",
  "sn10:7.4.4_0": "assa dhammassa magganā.",
  "sn10:7.5.1_0": "Na hi putto pati vāpi,",
  "sn10:7.5.2_0": "piyo dukkhā pamocaye;",
  "sn10:7.5.3_0": "Yathā saddhammassavanaṁ,",
  "sn10:7.5.4_0": "dukkhā moceti pāṇinaṁ.",
  "sn10:7.6.1_0": "Loke dukkhaparetasmiṁ,",
  "sn10:7.6.2_0": "Jarāmaraṇasaṁyute;",
  "sn10:7.6.3_0": "Jarāmaraṇamokkhāya,",
  "sn10:7.6.4_0": "Yaṁ dhammaṁ abhisambudhaṁ;",
  "sn10:7.6.5_0": "Taṁ dhammaṁ sotumicchāmi,",
  "sn10:7.6.6_0": "Tuṇhī hohi punabbasū”ti.",
  "sn10:7.7.1_0": "“Ammā na byāharissāmi,",
  "sn10:7.7.2_0": "tuṇhībhūtāyamuttarā;",
  "sn10:7.7.3_0": "Dhammameva nisāmehi,",
  "sn10:7.7.4_0": "saddhammassavanaṁ sukhaṁ;",
  "sn10:7.7.5_0": "Saddhammassa anaññāya,",
  "sn10:7.7.6_0": "ammā dukkhaṁ carāmase.",
  "sn10:7.8.1_0": "Esa devamanussānaṁ,",
  "sn10:7.8.2_0": "sammūḷhānaṁ pabhaṅkaro;",
  "sn10:7.8.3_0": "Buddho antimasārīro,",
  "sn10:7.8.4_0": "dhammaṁ deseti cakkhumā”ti.",
  "sn10:7.9.1_0": "“Sādhu kho paṇḍito nāma,",
  "sn10:7.9.2_0": "putto jāto uresayo;",
  "sn10:7.9.3_0": "Putto me buddhaseṭṭhassa,",
  "sn10:7.9.4_0": "dhammaṁ suddhaṁ piyāyati.",
  "sn10:7.10.1_0": "Punabbasu sukhī hohi,",
  "sn10:7.10.2_0": "ajjāhamhi samuggatā;",
  "sn10:7.10.3_0": "Diṭṭhāni ariyasaccāni,",
  "sn10:7.10.4_0": "uttarāpi suṇātu me”ti.",
  "sn10:8.0.1_0": "Saṁyutta Nikāya 10.8",
  "sn10:8.0.2_0": "1. Indakavagga",
  "sn10:8.0.3_0": "Sudattasutta",
  "sn10:8.1.1_0": "Ekaṁ samayaṁ bhagavā rājagahe viharati sītavane.",
  "sn10:8.1.2_0": "Tena kho pana samayena anāthapiṇḍiko gahapati rājagahaṁ anuppatto hoti kenacideva karaṇīyena.",
  "sn10:8.1.3_0": "Assosi kho anāthapiṇḍiko gahapati:",
  "sn10:8.1.4_0": "“buddho kira loke uppanno”ti.",
  "sn10:8.1.5_0": "Tāvadeva ca pana bhagavantaṁ dassanāya upasaṅkamitukāmo hoti.",
  "sn10:8.1.5_1": "Athassa anāthapiṇḍikassa gahapatissa etadahosi:",
  "sn10:8.1.6_0": "“akālo kho ajja bhagavantaṁ dassanāya upasaṅkamituṁ.",
  "sn10:8.1.7_0": "Sve dānāhaṁ kālena bhagavantaṁ dassanāya gamissāmī”ti buddhagatāya satiyā nipajji.",
  "sn10:8.1.8_0": "Rattiyā sudaṁ tikkhattuṁ vuṭṭhāsi pabhātanti maññamāno.",
  "sn10:8.1.9_0": "Atha kho anāthapiṇḍiko gahapati yena sivathikadvāraṁ tenupasaṅkami.",
  "sn10:8.1.10_0": "Amanussā dvāraṁ vivariṁsu.",
  "sn10:8.1.11_0": "Atha kho anāthapiṇḍikassa gahapatissa nagaramhā nikkhamantassa āloko antaradhāyi,",
  "sn10:8.1.11_1": "andhakāro pāturahosi,",
  "sn10:8.1.11_2": "bhayaṁ chambhitattaṁ lomahaṁso udapādi,",
  "sn10:8.1.11_3": "tatova puna nivattitukāmo ahosi.",
  "sn10:8.1.12_0": "Atha kho sivako yakkho antarahito saddamanussāvesi:",
  "sn10:8.2.1_0": "“Sataṁ hatthī sataṁ assā,",
  "sn10:8.2.2_0": "Sataṁ assatarīrathā;",
  "sn10:8.2.3_0": "Sataṁ kaññāsahassāni,",
  "sn10:8.2.4_0": "Āmukkamaṇikuṇḍalā;",
  "sn10:8.2.5_0": "Ekassa padavītihārassa,",
  "sn10:8.2.6_0": "Kalaṁ nāgghanti soḷasiṁ.",
  "sn10:8.3.1_0": "Abhikkama gahapati,",
  "sn10:8.3.2_0": "abhikkama gahapati;",
  "sn10:8.3.3_0": "Abhikkamanaṁ te seyyo,",
  "sn10:8.3.4_0": "no paṭikkamanan”ti.",
  "sn10:8.4.1_0": "Atha kho anāthapiṇḍikassa gahapatissa andhakāro antaradhāyi,",
  "sn10:8.4.1_1": "āloko pāturahosi,",
  "sn10:8.4.1_2": "yaṁ ahosi bhayaṁ chambhitattaṁ lomahaṁso,",
  "sn10:8.4.1_3": "so paṭippassambhi.",
  "sn10:8.4.2_0": "Dutiyampi kho anāthapiṇḍikassa gahapatissa āloko antaradhāyi,",
  "sn10:8.4.2_1": "andhakāro pāturahosi,",
  "sn10:8.4.2_2": "bhayaṁ chambhitattaṁ lomahaṁso udapādi,",
  "sn10:8.4.2_3": "tatova puna nivattitukāmo ahosi.",
  "sn10:8.4.3_0": "Dutiyampi kho sivako yakkho antarahito saddamanussāvesi:",
  "sn10:8.5.1_0": "“Sataṁ hatthī sataṁ assā,",
  "sn10:8.5.2_0": "…pe…",
  "sn10:8.5.3_0": "Kalaṁ nāgghanti soḷasiṁ.",
  "sn10:8.6.1_0": "Abhikkama gahapati,",
  "sn10:8.6.2_0": "abhikkama gahapati;",
  "sn10:8.6.3_0": "Abhikkamanaṁ te seyyo,",
  "sn10:8.6.4_0": "no paṭikkamanan”ti.",
  "sn10:8.7.1_0": "Atha kho anāthapiṇḍikassa gahapatissa andhakāro antaradhāyi,",
  "sn10:8.7.1_1": "āloko pāturahosi,",
  "sn10:8.7.1_2": "yaṁ ahosi bhayaṁ chambhitattaṁ lomahaṁso,",
  "sn10:8.7.1_3": "so paṭippassambhi.",
  "sn10:8.7.2_0": "Tatiyampi kho anāthapiṇḍikassa gahapatissa āloko antaradhāyi,",
  "sn10:8.7.2_1": "andhakāro pāturahosi,",
  "sn10:8.7.2_2": "bhayaṁ chambhitattaṁ lomahaṁso udapādi,",
  "sn10:8.7.2_3": "tatova puna nivattitukāmo ahosi.",
  "sn10:8.7.3_0": "Tatiyampi kho sivako yakkho antarahito saddamanussāvesi:",
  "sn10:8.8.1_0": "“Sataṁ hatthī sataṁ assā,",
  "sn10:8.8.2_0": "…pe…",
  "sn10:8.8.3_0": "Kalaṁ nāgghanti soḷasiṁ.",
  "sn10:8.9.1_0": "Abhikkama gahapati,",
  "sn10:8.9.2_0": "abhikkama gahapati;",
  "sn10:8.9.3_0": "Abhikkamanaṁ te seyyo,",
  "sn10:8.9.4_0": "no paṭikkamanan”ti.",
  "sn10:8.10.1_0": "Atha kho anāthapiṇḍikassa gahapatissa andhakāro antaradhāyi,",
  "sn10:8.10.1_1": "āloko pāturahosi,",
  "sn10:8.10.1_2": "yaṁ ahosi bhayaṁ chambhitattaṁ lomahaṁso,",
  "sn10:8.10.1_3": "so paṭippassambhi.",
  "sn10:8.10.2_0": "Atha kho anāthapiṇḍiko gahapati yena sītavanaṁ yena bhagavā tenupasaṅkami.",
  "sn10:8.11.1_0": "Tena kho pana samayena bhagavā rattiyā paccūsasamayaṁ paccuṭṭhāya abbhokāse caṅkamati.",
  "sn10:8.11.2_0": "Addasā kho bhagavā anāthapiṇḍikaṁ gahapatiṁ dūratova āgacchantaṁ.",
  "sn10:8.11.3_0": "Disvāna caṅkamā orohitvā paññatte āsane nisīdi.",
  "sn10:8.11.4_0": "Nisajja kho bhagavā anāthapiṇḍikaṁ gahapatiṁ etadavoca:",
  "sn10:8.11.5_0": "“ehi, sudattā”ti.",
  "sn10:8.11.6_0": "Atha kho anāthapiṇḍiko gahapati,",
  "sn10:8.11.6_1": "nāmena maṁ bhagavā ālapatīti,",
  "sn10:8.11.6_2": "haṭṭho udaggo tattheva bhagavato pādesu sirasā nipatitvā bhagavantaṁ etadavoca:",
  "sn10:8.11.7_0": "“kacci, bhante, bhagavā sukhamasayitthā”ti?",
  "sn10:8.12.1_0": "“Sabbadā ve sukhaṁ seti,",
  "sn10:8.12.2_0": "brāhmaṇo parinibbuto;",
  "sn10:8.12.3_0": "Yo na limpati kāmesu,",
  "sn10:8.12.4_0": "sītibhūto nirūpadhi.",
  "sn10:8.13.1_0": "Sabbā āsattiyo chetvā,",
  "sn10:8.13.2_0": "vineyya hadaye daraṁ;",
  "sn10:8.13.3_0": "Upasanto sukhaṁ seti,",
  "sn10:8.13.4_0": "santiṁ pappuyya cetasā”ti.",
  "sn10:9.0.1_0": "Saṁyutta Nikāya 10.9",
  "sn10:9.0.2_0": "1. Indakavagga",
  "sn10:9.0.3_0": "Paṭhamasukkāsutta",
  "sn10:9.1.1_0": "Ekaṁ samayaṁ bhagavā rājagahe viharati veḷuvane kalandakanivāpe.",
  "sn10:9.1.2_0": "Tena kho pana samayena sukkā bhikkhunī mahatiyā parisāya parivutā dhammaṁ deseti.",
  "sn10:9.1.3_0": "Atha kho sukkāya bhikkhuniyā abhippasanno yakkho rājagahe rathikāya rathikaṁ siṅghāṭakena siṅghāṭakaṁ upasaṅkamitvā tāyaṁ velāyaṁ imā gāthāyo abhāsi:",
  "sn10:9.2.1_0": "“Kiṁ me katā rājagahe manussā,",
  "sn10:9.2.2_0": "Madhupītāva seyare;",
  "sn10:9.2.3_0": "Ye sukkaṁ na payirupāsanti,",
  "sn10:9.2.4_0": "Desentiṁ amataṁ padaṁ.",
  "sn10:9.3.1_0": "Tañca pana appaṭivānīyaṁ,",
  "sn10:9.3.2_0": "Asecanakamojavaṁ;",
  "sn10:9.3.3_0": "Pivanti maññe sappaññā,",
  "sn10:9.3.4_0": "Valāhakamiva panthagū”ti.",
  "sn10:10.0.1_0": "Saṁyutta Nikāya 10.10",
  "sn10:10.0.2_0": "1. Indakavagga",
  "sn10:10.0.3_0": "Dutiyasukkāsutta",
  "sn10:10.1.1_0": "Ekaṁ samayaṁ bhagavā rājagahe viharati veḷuvane kalandakanivāpe.",
  "sn10:10.1.2_0": "Tena kho pana samayena aññataro upāsako sukkāya bhikkhuniyā bhojanaṁ adāsi.",
  "sn10:10.1.3_0": "Atha kho sukkāya bhikkhuniyā abhippasanno yakkho rājagahe rathikāya rathikaṁ siṅghāṭakena siṅghāṭakaṁ upasaṅkamitvā tāyaṁ velāyaṁ imaṁ gāthaṁ abhāsi:",
  "sn10:10.2.1_0": "“Puññaṁ vata pasavi bahuṁ,",
  "sn10:10.2.2_0": "Sappañño vatāyaṁ upāsako;",
  "sn10:10.2.3_0": "Yo sukkāya adāsi bhojanaṁ,",
  "sn10:10.2.4_0": "Sabbaganthehi vippamuttiyā”ti.",
  "sn10:11.0.1_0": "Saṁyutta Nikāya 10.11",
  "sn10:11.0.2_0": "1. Indakavagga",
  "sn10:11.0.3_0": "Cīrāsutta",
  "sn10:11.1.1_0": "Evaṁ me sutaṁ—",
  "sn10:11.1.2_0": "ekaṁ samayaṁ bhagavā rājagahe viharati veḷuvane kalandakanivāpe.",
  "sn10:11.1.3_0": "Tena kho pana samayena aññataro upāsako cīrāya bhikkhuniyā cīvaraṁ adāsi.",
  "sn10:11.1.4_0": "Atha kho cīrāya bhikkhuniyā abhippasanno yakkho rājagahe rathikāya rathikaṁ siṅghāṭakena siṅghāṭakaṁ upasaṅkamitvā tāyaṁ velāyaṁ imaṁ gāthaṁ abhāsi:",
  "sn10:11.2.1_0": "“Puññaṁ vata pasavi bahuṁ,",
  "sn10:11.2.2_0": "Sappañño vatāyaṁ upāsako;",
  "sn10:11.2.3_0": "Yo cīrāya adāsi cīvaraṁ,",
  "sn10:11.2.4_0": "Sabbayogehi vippamuttiyā”ti.",
  "sn10:12.0.1_0": "Saṁyutta Nikāya 10.12",
  "sn10:12.0.2_0": "1. Indakavagga",
  "sn10:12.0.3_0": "Āḷavakasutta",
  "sn10:12.1.1_0": "Evaṁ me sutaṁ—",
  "sn10:12.1.2_0": "ekaṁ samayaṁ bhagavā āḷaviyaṁ viharati āḷavakassa yakkhassa bhavane.",
  "sn10:12.1.3_0": "Atha kho āḷavako yakkho yena bhagavā tenupasaṅkami; upasaṅkamitvā bhagavantaṁ etadavoca:",
  "sn10:12.1.4_0": "“nikkhama, samaṇā”ti.",
  "sn10:12.1.5_0": "“Sādhāvuso”ti bhagavā nikkhami.",
  "sn10:12.1.6_0": "“Pavisa, samaṇā”ti.",
  "sn10:12.1.7_0": "“Sādhāvuso”ti bhagavā pāvisi.",
  "sn10:12.1.8_0": "Dutiyampi kho āḷavako yakkho bhagavantaṁ etadavoca:",
  "sn10:12.1.9_0": "“nikkhama, samaṇā”ti.",
  "sn10:12.1.10_0": "“Sādhāvuso”ti bhagavā nikkhami.",
  "sn10:12.1.11_0": "“Pavisa, samaṇā”ti.",
  "sn10:12.1.12_0": "“Sādhāvuso”ti bhagavā pāvisi.",
  "sn10:12.1.13_0": "Tatiyampi kho āḷavako yakkho bhagavantaṁ etadavoca:",
  "sn10:12.1.14_0": "“nikkhama, samaṇā”ti.",
  "sn10:12.1.15_0": "“Sādhāvuso”ti bhagavā nikkhami.",
  "sn10:12.1.16_0": "“Pavisa, samaṇā”ti.",
  "sn10:12.1.17_0": "“Sādhāvuso”ti bhagavā pāvisi.",
  "sn10:12.1.18_0": "Catutthampi kho āḷavako yakkho bhagavantaṁ etadavoca:",
  "sn10:12.1.19_0": "“nikkhama, samaṇā”ti.",
  "sn10:12.1.20_0": "“Na khvāhaṁ taṁ, āvuso, nikkhamissāmi.",
  "sn10:12.1.21_0": "Yaṁ te karaṇīyaṁ taṁ karohī”ti.",
  "sn10:12.1.22_0": "“Pañhaṁ taṁ, samaṇa, pucchissāmi.",
  "sn10:12.1.23_0": "Sace me na byākarissasi,",
  "sn10:12.1.23_1": "cittaṁ vā te khipissāmi,",
  "sn10:12.1.23_2": "hadayaṁ vā te phālessāmi,",
  "sn10:12.1.23_3": "pādesu vā gahetvā pāragaṅgāya khipissāmī”ti.",
  "sn10:12.1.24_0": "“Na khvāhaṁ taṁ, āvuso,",
  "sn10:12.1.24_1": "passāmi sadevake loke samārake sabrahmake sassamaṇabrāhmaṇiyā pajāya sadevamanussāya,",
  "sn10:12.1.24_2": "yo me cittaṁ vā khipeyya hadayaṁ vā phāleyya,",
  "sn10:12.1.24_3": "pādesu vā gahetvā pāragaṅgāya khipeyya.",
  "sn10:12.1.25_0": "Api ca tvaṁ, āvuso, puccha yadā kaṅkhasī”ti (…).",
  "sn10:12.2.1_0": "“Kiṁsūdha vittaṁ purisassa seṭṭhaṁ,",
  "sn10:12.2.2_0": "Kiṁsu suciṇṇaṁ sukhamāvahāti;",
  "sn10:12.2.3_0": "Kiṁsu have sādutaraṁ rasānaṁ,",
  "sn10:12.2.4_0": "Kathaṁjīviṁ jīvitamāhu seṭṭhan”ti.",
  "sn10:12.3.1_0": "“Saddhīdha vittaṁ purisassa seṭṭhaṁ,",
  "sn10:12.3.2_0": "Dhammo suciṇṇo sukhamāvahāti;",
  "sn10:12.3.3_0": "Saccaṁ have sādutaraṁ rasānaṁ,",
  "sn10:12.3.4_0": "Paññājīviṁ jīvitamāhu seṭṭhan”ti.",
  "sn10:12.4.1_0": "“Kathaṁsu tarati oghaṁ,",
  "sn10:12.4.2_0": "kathaṁsu tarati aṇṇavaṁ;",
  "sn10:12.4.3_0": "Kathaṁsu dukkhamacceti,",
  "sn10:12.4.4_0": "kathaṁsu parisujjhatī”ti.",
  "sn10:12.5.1_0": "“Saddhāya tarati oghaṁ,",
  "sn10:12.5.2_0": "appamādena aṇṇavaṁ;",
  "sn10:12.5.3_0": "Vīriyena dukkhamacceti,",
  "sn10:12.5.4_0": "paññāya parisujjhatī”ti.",
  "sn10:12.6.1_0": "“Kathaṁsu labhate paññaṁ,",
  "sn10:12.6.2_0": "kathaṁsu vindate dhanaṁ;",
  "sn10:12.6.3_0": "Kathaṁsu kittiṁ pappoti,",
  "sn10:12.6.4_0": "kathaṁ mittāni ganthati;",
  "sn10:12.6.5_0": "Asmā lokā paraṁ lokaṁ,",
  "sn10:12.6.6_0": "kathaṁ pecca na socatī”ti.",
  "sn10:12.7.1_0": "“Saddahāno arahataṁ,",
  "sn10:12.7.2_0": "dhammaṁ nibbānapattiyā;",
  "sn10:12.7.3_0": "Sussūsaṁ labhate paññaṁ,",
  "sn10:12.7.4_0": "appamatto vicakkhaṇo.",
  "sn10:12.8.1_0": "Patirūpakārī dhuravā,",
  "sn10:12.8.2_0": "uṭṭhātā vindate dhanaṁ;",
  "sn10:12.8.3_0": "Saccena kittiṁ pappoti,",
  "sn10:12.8.4_0": "dadaṁ mittāni ganthati;",
  "sn10:12.8.5_0": "Asmā lokā paraṁ lokaṁ,",
  "sn10:12.8.6_0": "evaṁ pecca na socati.",
  "sn10:12.9.1_0": "Yassete caturo dhammā,",
  "sn10:12.9.2_0": "saddhassa gharamesino;",
  "sn10:12.9.3_0": "Saccaṁ dhammo dhiti cāgo,",
  "sn10:12.9.4_0": "sa ve pecca na socati.",
  "sn10:12.10.1_0": "Iṅgha aññepi pucchassu,",
  "sn10:12.10.2_0": "puthū samaṇabrāhmaṇe;",
  "sn10:12.10.3_0": "Yadi saccā dhammā cāgā,",
  "sn10:12.10.4_0": "khantyā bhiyyodha vijjatī”ti.",
  "sn10:12.11.1_0": "“Kathaṁ nu dāni puccheyyaṁ,",
  "sn10:12.11.2_0": "puthū samaṇabrāhmaṇe;",
  "sn10:12.11.3_0": "Yohaṁ ajja pajānāmi,",
  "sn10:12.11.4_0": "yo attho samparāyiko.",
  "sn10:12.12.1_0": "Atthāya vata me buddho,",
  "sn10:12.12.2_0": "vāsāyāḷavimāgamā;",
  "sn10:12.12.3_0": "Yohaṁ ajja pajānāmi,",
  "sn10:12.12.4_0": "yattha dinnaṁ mahapphalaṁ.",
  "sn10:12.13.1_0": "So ahaṁ vicarissāmi,",
  "sn10:12.13.2_0": "Gāmā gāmaṁ purā puraṁ;",
  "sn10:12.13.3_0": "Namassamāno sambuddhaṁ,",
  "sn10:12.13.4_0": "Dhammassa ca sudhammatan”ti.",
  "sn10:12.13.5_0": "Indakavaggo paṭhamo.",
  "sn10:12.14.0_0": "Tassuddānaṁ",
  "sn10:12.14.1_0": "Indako sakka sūci ca,",
  "sn10:12.14.2_0": "Maṇibhaddo ca sānu ca;",
  "sn10:12.14.3_0": "Piyaṅkara punabbasu sudatto ca,",
  "sn10:12.14.4_0": "Dve sukkā cīraāḷavīti dvādasa.",
  "sn10:12.14.5_0": "Yakkhasaṁyuttaṁ samattaṁ."
}