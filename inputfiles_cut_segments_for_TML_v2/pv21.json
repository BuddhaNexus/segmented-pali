{
  "pv21:0.1_0": "Petavatthu",
  "pv21:0.2_0": "Ubbarivagga",
  "pv21:0.3_0": "9. Aṅkurapetavatthu",
  "pv21:1.1_0": "“Yassa atthāya gacchāma,",
  "pv21:1.2_0": "kambojaṁ dhanahārakā;",
  "pv21:1.3_0": "Ayaṁ kāmadado yakkho,",
  "pv21:1.4_0": "imaṁ yakkhaṁ nayāmase.",
  "pv21:2.1_0": "Imaṁ yakkhaṁ gahetvāna,",
  "pv21:2.2_0": "Sādhukena pasayha vā;",
  "pv21:2.3_0": "Yānaṁ āropayitvāna,",
  "pv21:2.4_0": "Khippaṁ gacchāma dvārakan”ti.",
  "pv21:3.1_0": "“Yassa rukkhassa chāyāya,",
  "pv21:3.2_0": "nisīdeyya sayeyya vā;",
  "pv21:3.3_0": "Na tassa sākhaṁ bhañjeyya,",
  "pv21:3.4_0": "mittadubbho hi pāpako”ti.",
  "pv21:4.1_0": "“Yassa rukkhassa chāyāya,",
  "pv21:4.2_0": "nisīdeyya sayeyya vā;",
  "pv21:4.3_0": "Khandhampi tassa chindeyya,",
  "pv21:4.4_0": "attho ce tādiso siyā”ti.",
  "pv21:5.1_0": "“Yassa rukkhassa chāyāya,",
  "pv21:5.2_0": "nisīdeyya sayeyya vā;",
  "pv21:5.3_0": "Na tassa pattaṁ bhindeyya,",
  "pv21:5.4_0": "mittadubbho hi pāpako”ti.",
  "pv21:6.1_0": "“Yassa rukkhassa chāyāya,",
  "pv21:6.2_0": "nisīdeyya sayeyya vā;",
  "pv21:6.3_0": "Samūlampi taṁ abbuhe,",
  "pv21:6.4_0": "attho ce tādiso siyā”ti.",
  "pv21:7.1_0": "“Yassekarattimpi ghare vaseyya,",
  "pv21:7.2_0": "Yatthannapānaṁ puriso labhetha;",
  "pv21:7.3_0": "Na tassa pāpaṁ manasāpi cintaye,",
  "pv21:7.4_0": "Kataññutā sappurisehi vaṇṇitā.",
  "pv21:8.1_0": "Yassekarattimpi ghare vaseyya,",
  "pv21:8.2_0": "Annena pānena upaṭṭhito siyā;",
  "pv21:8.3_0": "Na tassa pāpaṁ manasāpi cintaye,",
  "pv21:8.4_0": "Adubbhapāṇī dahate mittadubbhiṁ.",
  "pv21:9.1_0": "Yo pubbe katakalyāṇo,",
  "pv21:9.2_0": "pacchā pāpena hiṁsati;",
  "pv21:9.3_0": "Allapāṇihato poso,",
  "pv21:9.4_0": "na so bhadrāni passatī”ti.",
  "pv21:10.1_0": "“Nāhaṁ devena vā manussena vā,",
  "pv21:10.2_0": "Issariyena vāhaṁ suppasayho;",
  "pv21:10.3_0": "Yakkhohamasmi paramiddhipatto,",
  "pv21:10.4_0": "Dūraṅgamo vaṇṇabalūpapanno”ti.",
  "pv21:11.1_0": "“Pāṇi te sabbaso vaṇṇo,",
  "pv21:11.2_0": "pañcadhāro madhussavo;",
  "pv21:11.3_0": "Nānārasā paggharanti,",
  "pv21:11.4_0": "maññehaṁ taṁ purindadan”ti.",
  "pv21:12.1_0": "“Nāmhi devo na gandhabbo,",
  "pv21:12.2_0": "nāpi sakko purindado;",
  "pv21:12.3_0": "Petaṁ maṁ aṅkura jānāhi,",
  "pv21:12.4_0": "roruvamhā idhāgatan”ti.",
  "pv21:13.1_0": "“Kiṁsīlo kiṁsamācāro,",
  "pv21:13.2_0": "roruvasmiṁ pure tuvaṁ;",
  "pv21:13.3_0": "Kena te brahmacariyena,",
  "pv21:13.4_0": "puññaṁ pāṇimhi ijjhatī”ti.",
  "pv21:14.1_0": "“Tunnavāyo pure āsiṁ,",
  "pv21:14.2_0": "roruvasmiṁ tadā ahaṁ;",
  "pv21:14.3_0": "Sukicchavutti kapaṇo,",
  "pv21:14.4_0": "na me vijjati dātave.",
  "pv21:15.1_0": "Nivesanañca me āsi,",
  "pv21:15.2_0": "asayhassa upantike;",
  "pv21:15.3_0": "Saddhassa dānapatino,",
  "pv21:15.4_0": "katapuññassa lajjino.",
  "pv21:16.1_0": "Tattha yācanakāyanti,",
  "pv21:16.2_0": "nānāgottā vanibbakā;",
  "pv21:16.3_0": "Te ca maṁ tattha pucchanti,",
  "pv21:16.4_0": "asayhassa nivesanaṁ.",
  "pv21:17.1_0": "Kattha gacchāma bhaddaṁ vo,",
  "pv21:17.2_0": "kattha dānaṁ padīyati;",
  "pv21:17.3_0": "Tesāhaṁ puṭṭho akkhāmi,",
  "pv21:17.4_0": "asayhassa nivesanaṁ.",
  "pv21:18.1_0": "Paggayha dakkhiṇaṁ bāhuṁ,",
  "pv21:18.2_0": "ettha gacchatha bhaddaṁ vo;",
  "pv21:18.3_0": "Ettha dānaṁ padīyati,",
  "pv21:18.4_0": "asayhassa nivesane.",
  "pv21:19.1_0": "Tena pāṇi kāmadado,",
  "pv21:19.2_0": "tena pāṇi madhussavo;",
  "pv21:19.3_0": "Tena me brahmacariyena,",
  "pv21:19.4_0": "puññaṁ pāṇimhi ijjhatī”ti.",
  "pv21:20.1_0": "“Na kira tvaṁ adā dānaṁ,",
  "pv21:20.2_0": "Sakapāṇīhi kassaci;",
  "pv21:20.3_0": "Parassa dānaṁ anumodamāno,",
  "pv21:20.4_0": "Pāṇiṁ paggayha pāvadi.",
  "pv21:21.1_0": "Tena pāṇi kāmadado,",
  "pv21:21.2_0": "tena pāṇi madhussavo;",
  "pv21:21.3_0": "Tena te brahmacariyena,",
  "pv21:21.4_0": "puññaṁ pāṇimhi ijjhati.",
  "pv21:22.1_0": "Yo so dānamadā bhante,",
  "pv21:22.2_0": "pasanno sakapāṇibhi;",
  "pv21:22.3_0": "So hitvā mānusaṁ dehaṁ,",
  "pv21:22.4_0": "kiṁ nu so disataṁ gato”ti.",
  "pv21:23.1_0": "“Nāhaṁ pajānāmi asayhasāhino,",
  "pv21:23.2_0": "Aṅgīrasassa gatiṁ āgatiṁ vā;",
  "pv21:23.3_0": "Sutañca me vessavaṇassa santike,",
  "pv21:23.4_0": "Sakkassa sahabyataṁ gato asayho”ti.",
  "pv21:24.1_0": "“Alameva kātuṁ kalyāṇaṁ,",
  "pv21:24.2_0": "dānaṁ dātuṁ yathārahaṁ;",
  "pv21:24.3_0": "Pāṇiṁ kāmadadaṁ disvā,",
  "pv21:24.4_0": "ko puññaṁ na karissati.",
  "pv21:25.1_0": "So hi nūna ito gantvā,",
  "pv21:25.2_0": "anuppatvāna dvārakaṁ;",
  "pv21:25.3_0": "Dānaṁ paṭṭhapayissāmi,",
  "pv21:25.4_0": "yaṁ mamassa sukhāvahaṁ.",
  "pv21:26.1_0": "Dassāmannañca pānañca,",
  "pv21:26.2_0": "vatthasenāsanāni ca;",
  "pv21:26.3_0": "Papañca udapānañca,",
  "pv21:26.4_0": "dugge saṅkamanāni cā”ti.",
  "pv21:27.1_0": "“Kena te aṅgulī kuṇā,",
  "pv21:27.2_0": "mukhañca kuṇalīkataṁ;",
  "pv21:27.3_0": "Akkhīni ca paggharanti,",
  "pv21:27.4_0": "kiṁ pāpaṁ pakataṁ tayā”ti.",
  "pv21:28.1_0": "“Aṅgīrasassa gahapatino,",
  "pv21:28.2_0": "Saddhassa gharamesino;",
  "pv21:28.3_0": "Tassāhaṁ dānavissagge,",
  "pv21:28.4_0": "Dāne adhikato ahuṁ.",
  "pv21:29.1_0": "Tattha yācanake disvā,",
  "pv21:29.2_0": "āgate bhojanatthike;",
  "pv21:29.3_0": "Ekamantaṁ apakkamma,",
  "pv21:29.4_0": "akāsiṁ kuṇaliṁ mukhaṁ.",
  "pv21:30.1_0": "Tena me aṅgulī kuṇā,",
  "pv21:30.2_0": "mukhañca kuṇalīkataṁ;",
  "pv21:30.3_0": "Akkhīni me paggharanti,",
  "pv21:30.4_0": "taṁ pāpaṁ pakataṁ mayā”ti.",
  "pv21:31.1_0": "“Dhammena te kāpurisa,",
  "pv21:31.2_0": "mukhañca kuṇalīkataṁ;",
  "pv21:31.3_0": "Akkhīni ca paggharanti,",
  "pv21:31.4_0": "yaṁ taṁ parassa dānassa;",
  "pv21:31.5_0": "Akāsi kuṇaliṁ mukhaṁ.",
  "pv21:32.1_0": "Kathaṁ hi dānaṁ dadamāno,",
  "pv21:32.2_0": "kareyya parapattiyaṁ;",
  "pv21:32.3_0": "Annaṁ pānaṁ khādanīyaṁ,",
  "pv21:32.4_0": "vatthasenāsanāni ca.",
  "pv21:33.1_0": "So hi nūna ito gantvā,",
  "pv21:33.2_0": "anuppatvāna dvārakaṁ;",
  "pv21:33.3_0": "Dānaṁ paṭṭhapayissāmi,",
  "pv21:33.4_0": "yaṁ mamassa sukhāvahaṁ.",
  "pv21:34.1_0": "Dassāmannañca pānañca,",
  "pv21:34.2_0": "vatthasenāsanāni ca;",
  "pv21:34.3_0": "Papañca udapānañca,",
  "pv21:34.4_0": "dugge saṅkamanāni cā”ti.",
  "pv21:35.1_0": "Tato hi so nivattitvā,",
  "pv21:35.2_0": "anuppatvāna dvārakaṁ;",
  "pv21:35.3_0": "Dānaṁ paṭṭhapayi aṅkuro,",
  "pv21:35.4_0": "yaṁtumassa sukhāvahaṁ.",
  "pv21:36.1_0": "Adā annañca pānañca,",
  "pv21:36.2_0": "vatthasenāsanāni ca;",
  "pv21:36.3_0": "Papañca udapānañca,",
  "pv21:36.4_0": "vippasannena cetasā.",
  "pv21:37.1_0": "Ko chāto ko ca tasito,",
  "pv21:37.2_0": "ko vatthaṁ paridahissati;",
  "pv21:37.3_0": "Kassa santāni yoggāni,",
  "pv21:37.4_0": "ito yojentu vāhanaṁ.",
  "pv21:38.1_0": "Ko chatticchati gandhañca,",
  "pv21:38.2_0": "ko mālaṁ ko upāhanaṁ;",
  "pv21:38.3_0": "Itissu tattha ghosenti,",
  "pv21:38.4_0": "kappakā sūdamāgadhā;",
  "pv21:38.5_0": "Sadā sāyañca pāto ca,",
  "pv21:38.6_0": "aṅkurassa nivesane.",
  "pv21:39.1_0": "“‘Sukhaṁ supati aṅkuro’,",
  "pv21:39.2_0": "iti jānāti maṁ jano;",
  "pv21:39.3_0": "Dukkhaṁ supāmi sindhaka,",
  "pv21:39.4_0": "yaṁ na passāmi yācake.",
  "pv21:40.1_0": "‘Sukhaṁ supati aṅkuro’,",
  "pv21:40.2_0": "iti jānāti maṁ jano;",
  "pv21:40.3_0": "Dukkhaṁ sindhaka supāmi,",
  "pv21:40.4_0": "appake su vanibbake”ti.",
  "pv21:41.1_0": "“Sakko ce te varaṁ dajjā,",
  "pv21:41.2_0": "tāvatiṁsānamissaro;",
  "pv21:41.3_0": "Kissa sabbassa lokassa,",
  "pv21:41.4_0": "varamāno varaṁ vare”ti.",
  "pv21:42.1_0": "“Sakko ce me varaṁ dajjā,",
  "pv21:42.2_0": "tāvatiṁsānamissaro;",
  "pv21:42.3_0": "Kāluṭṭhitassa me sato,",
  "pv21:42.4_0": "sūriyuggamanaṁ pati;",
  "pv21:42.5_0": "Dibbā bhakkhā pātubhaveyyuṁ,",
  "pv21:42.6_0": "sīlavanto ca yācakā.",
  "pv21:43.1_0": "Dadato me na khīyetha,",
  "pv21:43.2_0": "datvā nānutapeyyahaṁ;",
  "pv21:43.3_0": "Dadaṁ cittaṁ pasādeyyaṁ,",
  "pv21:43.4_0": "etaṁ sakkaṁ varaṁ vare”ti.",
  "pv21:44.1_0": "“Na sabbavittāni pare pavecche,",
  "pv21:44.2_0": "Dadeyya dānañca dhanañca rakkhe;",
  "pv21:44.3_0": "Tasmā hi dānā dhanameva seyyo,",
  "pv21:44.4_0": "Atippadānena kulā na honti.",
  "pv21:45.1_0": "Adānamatidānañca,",
  "pv21:45.2_0": "Nappasaṁsanti paṇḍitā;",
  "pv21:45.3_0": "Tasmā hi dānā dhanameva seyyo,",
  "pv21:45.4_0": "Samena vatteyya sa dhīradhammo”ti.",
  "pv21:46.1_0": "“Aho vata re ahameva dajjaṁ,",
  "pv21:46.2_0": "Santo ca maṁ sappurisā bhajeyyuṁ;",
  "pv21:46.3_0": "Meghova ninnāni paripūrayanto,",
  "pv21:46.4_0": "Santappaye sabbavanibbakānaṁ.",
  "pv21:47.1_0": "Yassa yācanake disvā,",
  "pv21:47.2_0": "mukhavaṇṇo pasīdati;",
  "pv21:47.3_0": "Datvā attamano hoti,",
  "pv21:47.4_0": "taṁ gharaṁ vasato sukhaṁ.",
  "pv21:48.1_0": "Yassa yācanake disvā,",
  "pv21:48.2_0": "mukhavaṇṇo pasīdati;",
  "pv21:48.3_0": "Datvā attamano hoti,",
  "pv21:48.4_0": "esā yaññassa sampadā.",
  "pv21:49.1_0": "Pubbeva dānā sumano,",
  "pv21:49.2_0": "dadaṁ cittaṁ pasādaye;",
  "pv21:49.3_0": "Datvā attamano hoti,",
  "pv21:49.4_0": "esā yaññassa sampadā”ti.",
  "pv21:50.1_0": "Saṭṭhi vāhasahassāni,",
  "pv21:50.2_0": "aṅkurassa nivesane;",
  "pv21:50.3_0": "Bhojanaṁ dīyate niccaṁ,",
  "pv21:50.4_0": "puññapekkhassa jantuno.",
  "pv21:51.1_0": "Tisahassāni sūdāni hi,",
  "pv21:51.2_0": "āmuttamaṇikuṇḍalā;",
  "pv21:51.3_0": "Aṅkuraṁ upajīvanti,",
  "pv21:51.4_0": "dāne yaññassa vāvaṭā.",
  "pv21:52.1_0": "Saṭṭhi purisasahassāni,",
  "pv21:52.2_0": "āmuttamaṇikuṇḍalā;",
  "pv21:52.3_0": "Aṅkurassa mahādāne,",
  "pv21:52.4_0": "kaṭṭhaṁ phālenti māṇavā.",
  "pv21:53.1_0": "Soḷasitthisahassāni,",
  "pv21:53.2_0": "sabbālaṅkārabhūsitā;",
  "pv21:53.3_0": "Aṅkurassa mahādāne,",
  "pv21:53.4_0": "vidhā piṇḍenti nāriyo.",
  "pv21:54.1_0": "Soḷasitthisahassāni,",
  "pv21:54.2_0": "sabbālaṅkārabhūsitā;",
  "pv21:54.3_0": "Aṅkurassa mahādāne,",
  "pv21:54.4_0": "dabbigāhā upaṭṭhitā.",
  "pv21:55.1_0": "Bahuṁ bahūnaṁ pādāsi,",
  "pv21:55.2_0": "ciraṁ pādāsi khattiyo;",
  "pv21:55.3_0": "Sakkaccañca sahatthā ca,",
  "pv21:55.4_0": "cittīkatvā punappunaṁ.",
  "pv21:56.1_0": "Bahū māse ca pakkhe ca,",
  "pv21:56.2_0": "utusaṁvaccharāni ca;",
  "pv21:56.3_0": "Mahādānaṁ pavattesi,",
  "pv21:56.4_0": "aṅkuro dīghamantaraṁ.",
  "pv21:57.1_0": "Evaṁ datvā yajitvā ca,",
  "pv21:57.2_0": "aṅkuro dīghamantaraṁ;",
  "pv21:57.3_0": "So hitvā mānusaṁ dehaṁ,",
  "pv21:57.4_0": "tāvatiṁsūpago ahu.",
  "pv21:58.1_0": "Kaṭacchubhikkhaṁ datvāna,",
  "pv21:58.2_0": "anuruddhassa indako;",
  "pv21:58.3_0": "So hitvā mānusaṁ dehaṁ,",
  "pv21:58.4_0": "tāvatiṁsūpago ahu.",
  "pv21:59.1_0": "Dasahi ṭhānehi aṅkuraṁ,",
  "pv21:59.2_0": "indako atirocati;",
  "pv21:59.3_0": "Rūpe sadde rase gandhe,",
  "pv21:59.4_0": "phoṭṭhabbe ca manorame.",
  "pv21:60.1_0": "Āyunā yasasā ceva,",
  "pv21:60.2_0": "vaṇṇena ca sukhena ca;",
  "pv21:60.3_0": "Ādhipaccena aṅkuraṁ,",
  "pv21:60.4_0": "indako atirocati.",
  "pv21:61.1_0": "(…)",
  "pv21:62.1_0": "Tāvatiṁse yadā buddho,",
  "pv21:62.2_0": "silāyaṁ paṇḍukambale;",
  "pv21:62.3_0": "Pāricchattakamūlamhi,",
  "pv21:62.4_0": "vihāsi purisuttamo.",
  "pv21:63.1_0": "Dasasu lokadhātūsu,",
  "pv21:63.2_0": "sannipatitvāna devatā;",
  "pv21:63.3_0": "Payirupāsanti sambuddhaṁ,",
  "pv21:63.4_0": "vasantaṁ nagamuddhani.",
  "pv21:64.1_0": "Na koci devo vaṇṇena,",
  "pv21:64.2_0": "sambuddhaṁ atirocati;",
  "pv21:64.3_0": "Sabbe deve atikkamma,",
  "pv21:64.4_0": "sambuddhova virocati.",
  "pv21:65.1_0": "Yojanāni dasa dve ca,",
  "pv21:65.2_0": "aṅkuroyaṁ tadā ahu;",
  "pv21:65.3_0": "Avidūreva buddhassa,",
  "pv21:65.4_0": "indako atirocati.",
  "pv21:66.1_0": "Oloketvāna sambuddho,",
  "pv21:66.2_0": "Aṅkurañcāpi indakaṁ;",
  "pv21:66.3_0": "Dakkhiṇeyyaṁ sambhāvento,",
  "pv21:66.4_0": "Idaṁ vacanamabravi.",
  "pv21:67.1_0": "“Mahādānaṁ tayā dinnaṁ,",
  "pv21:67.2_0": "aṅkura dīghamantaraṁ;",
  "pv21:67.3_0": "Atidūre nisinnosi,",
  "pv21:67.4_0": "āgaccha mama santike”ti.",
  "pv21:68.1_0": "Codito bhāvitattena,",
  "pv21:68.2_0": "aṅkuro idamabravi;",
  "pv21:68.3_0": "“Kiṁ mayhaṁ tena dānena,",
  "pv21:68.4_0": "dakkhiṇeyyena suññataṁ.",
  "pv21:69.1_0": "Ayaṁ so indako yakkho,",
  "pv21:69.2_0": "dajjā dānaṁ parittakaṁ;",
  "pv21:69.3_0": "Atirocati amhehi,",
  "pv21:69.4_0": "cando tāragaṇe yathā”ti.",
  "pv21:70.1_0": "“Ujjaṅgale yathā khette,",
  "pv21:70.2_0": "bījaṁ bahumpi ropitaṁ;",
  "pv21:70.3_0": "Na vipulaphalaṁ hoti,",
  "pv21:70.4_0": "napi toseti kassakaṁ.",
  "pv21:71.1_0": "Tatheva dānaṁ bahukaṁ,",
  "pv21:71.2_0": "dussīlesu patiṭṭhitaṁ;",
  "pv21:71.3_0": "Na vipulaphalaṁ hoti,",
  "pv21:71.4_0": "napi toseti dāyakaṁ.",
  "pv21:72.1_0": "Yathāpi bhaddake khette,",
  "pv21:72.2_0": "bījaṁ appampi ropitaṁ;",
  "pv21:72.3_0": "Sammā dhāraṁ pavecchante,",
  "pv21:72.4_0": "phalaṁ toseti kassakaṁ.",
  "pv21:73.1_0": "Tatheva sīlavantesu,",
  "pv21:73.2_0": "guṇavantesu tādisu;",
  "pv21:73.3_0": "Appakampi kataṁ kāraṁ,",
  "pv21:73.4_0": "puññaṁ hoti mahapphalan”ti.",
  "pv21:74.1_0": "Viceyya dānaṁ dātabbaṁ,",
  "pv21:74.2_0": "yattha dinnaṁ mahapphalaṁ;",
  "pv21:74.3_0": "Viceyya dānaṁ datvāna,",
  "pv21:74.4_0": "saggaṁ gacchanti dāyakā.",
  "pv21:75.1_0": "Viceyya dānaṁ sugatappasatthaṁ,",
  "pv21:75.2_0": "Ye dakkhiṇeyyā idha jīvaloke;",
  "pv21:75.3_0": "Etesu dinnāni mahapphalāni,",
  "pv21:75.4_0": "Bījāni vuttāni yathā sukhetteti.",
  "pv21:76.1_0": "Aṅkurapetavatthu navamaṁ."
}