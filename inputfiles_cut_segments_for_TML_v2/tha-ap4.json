{
  "tha-ap4:0.1_0": "Therāpadāna",
  "tha-ap4:0.2_0": "Buddhavagga",
  "tha-ap4:0.3_0": "4. Mahāmoggallānattheraapadāna",
  "tha-ap4:1.1_0": "“Anomadassī bhagavā,",
  "tha-ap4:1.2_0": "lokajeṭṭho narāsabho;",
  "tha-ap4:1.3_0": "Vihāsi himavantamhi,",
  "tha-ap4:1.4_0": "devasaṅghapurakkhato.",
  "tha-ap4:2.1_0": "Varuṇo nāma nāmena,",
  "tha-ap4:2.2_0": "nāgarājā ahaṁ tadā;",
  "tha-ap4:2.3_0": "Kāmarūpī vikubbāmi,",
  "tha-ap4:2.4_0": "mahodadhinivāsahaṁ.",
  "tha-ap4:3.1_0": "Saṅgaṇiyaṁ gaṇaṁ hitvā,",
  "tha-ap4:3.2_0": "tūriyaṁ paṭṭhapesahaṁ;",
  "tha-ap4:3.3_0": "Sambuddhaṁ parivāretvā,",
  "tha-ap4:3.4_0": "vādesuṁ accharā tadā.",
  "tha-ap4:4.1_0": "Vajjamānesu tūresu,",
  "tha-ap4:4.2_0": "devā tūrāni vajjayuṁ;",
  "tha-ap4:4.3_0": "Ubhinnaṁ saddaṁ sutvāna,",
  "tha-ap4:4.4_0": "buddhopi sampabujjhatha.",
  "tha-ap4:5.1_0": "Nimantetvāna sambuddhaṁ,",
  "tha-ap4:5.2_0": "sakaṁ bhavanupāgamiṁ;",
  "tha-ap4:5.3_0": "Āsanaṁ paññapetvāna,",
  "tha-ap4:5.4_0": "kālamārocayiṁ ahaṁ.",
  "tha-ap4:6.1_0": "Khīṇāsavasahassehi,",
  "tha-ap4:6.2_0": "parivuto lokanāyako;",
  "tha-ap4:6.3_0": "Obhāsento disā sabbā,",
  "tha-ap4:6.4_0": "bhavanaṁ me upāgami.",
  "tha-ap4:7.1_0": "Upaviṭṭhaṁ mahāvīraṁ,",
  "tha-ap4:7.2_0": "Devadevaṁ narāsabhaṁ;",
  "tha-ap4:7.3_0": "Sabhikkhusaṅghaṁ tappesiṁ,",
  "tha-ap4:7.4_0": "Annapānenahaṁ tadā.",
  "tha-ap4:8.1_0": "Anumodi mahāvīro,",
  "tha-ap4:8.2_0": "sayambhū aggapuggalo;",
  "tha-ap4:8.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap4:8.4_0": "imā gāthā abhāsatha.",
  "tha-ap4:9.1_0": "Yo so saṅghaṁ apūjesi,",
  "tha-ap4:9.2_0": "buddhañca lokanāyakaṁ;",
  "tha-ap4:9.3_0": "Tena cittappasādena,",
  "tha-ap4:9.4_0": "devalokaṁ gamissati.",
  "tha-ap4:10.1_0": "Sattasattatikkhattuñca,",
  "tha-ap4:10.2_0": "devarajjaṁ karissati;",
  "tha-ap4:10.3_0": "Pathabyā rajjaṁ aṭṭhasataṁ,",
  "tha-ap4:10.4_0": "vasudhaṁ āvasissati.",
  "tha-ap4:11.1_0": "Pañcapaññāsakkhattuñca,",
  "tha-ap4:11.2_0": "cakkavattī bhavissati;",
  "tha-ap4:11.3_0": "Bhogā asaṅkhiyā tassa,",
  "tha-ap4:11.4_0": "uppajjissanti tāvade.",
  "tha-ap4:12.1_0": "Aparimeyye ito kappe,",
  "tha-ap4:12.2_0": "okkākakulasambhavo;",
  "tha-ap4:12.3_0": "Gotamo nāma gottena,",
  "tha-ap4:12.4_0": "satthā loke bhavissati.",
  "tha-ap4:13.1_0": "Nirayā so cavitvāna,",
  "tha-ap4:13.2_0": "manussataṁ gamissati;",
  "tha-ap4:13.3_0": "Kolito nāma nāmena,",
  "tha-ap4:13.4_0": "brahmabandhu bhavissati.",
  "tha-ap4:14.1_0": "So pacchā pabbajitvāna,",
  "tha-ap4:14.2_0": "kusalamūlena codito;",
  "tha-ap4:14.3_0": "Gotamassa bhagavato,",
  "tha-ap4:14.4_0": "dutiyo hessati sāvako.",
  "tha-ap4:15.1_0": "Āraddhavīriyo pahitatto,",
  "tha-ap4:15.2_0": "Iddhiyā pāramiṁ gato;",
  "tha-ap4:15.3_0": "Sabbāsave pariññāya,",
  "tha-ap4:15.4_0": "Nibbāyissatināsavo.",
  "tha-ap4:16.1_0": "Pāpamittopanissāya,",
  "tha-ap4:16.2_0": "kāmarāgavasaṁ gato;",
  "tha-ap4:16.3_0": "Mātaraṁ pitarañcāpi,",
  "tha-ap4:16.4_0": "ghātayiṁ duṭṭhamānaso.",
  "tha-ap4:17.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap4:17.2_0": "nirayaṁ atha mānusaṁ;",
  "tha-ap4:17.3_0": "Pāpakammasamaṅgitā,",
  "tha-ap4:17.4_0": "bhinnasīso marāmahaṁ.",
  "tha-ap4:18.1_0": "Idaṁ pacchimakaṁ mayhaṁ,",
  "tha-ap4:18.2_0": "carimo vattate bhavo;",
  "tha-ap4:18.3_0": "Idhāpi ediso mayhaṁ,",
  "tha-ap4:18.4_0": "maraṇakāle bhavissati.",
  "tha-ap4:19.1_0": "Pavivekamanuyutto,",
  "tha-ap4:19.2_0": "samādhibhāvanārato;",
  "tha-ap4:19.3_0": "Sabbāsave pariññāya,",
  "tha-ap4:19.4_0": "viharāmi anāsavo.",
  "tha-ap4:20.1_0": "Dharaṇimpi sugambhīraṁ,",
  "tha-ap4:20.2_0": "bahalaṁ duppadhaṁsiyaṁ;",
  "tha-ap4:20.3_0": "Vāmaṅguṭṭhena khobheyyaṁ,",
  "tha-ap4:20.4_0": "iddhiyā pāramiṁ gato.",
  "tha-ap4:21.1_0": "Asmimānaṁ na passāmi,",
  "tha-ap4:21.2_0": "māno mayhaṁ na vijjati;",
  "tha-ap4:21.3_0": "Sāmaṇere upādāya,",
  "tha-ap4:21.4_0": "garucittaṁ karomahaṁ.",
  "tha-ap4:22.1_0": "Aparimeyye ito kappe,",
  "tha-ap4:22.2_0": "yaṁ kammamabhinīhariṁ;",
  "tha-ap4:22.3_0": "Tāhaṁ bhūmimanuppatto,",
  "tha-ap4:22.4_0": "pattomhi āsavakkhayaṁ.",
  "tha-ap4:23.1_0": "Paṭisambhidā catasso,",
  "tha-ap4:23.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap4:23.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap4:23.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap4:24.1_0": "Itthaṁ sudaṁ āyasmā mahāmoggallāno thero imā gāthāyo abhāsitthāti.",
  "tha-ap4:25.1_0": "Mahāmoggallānattherassāpadānaṁ dutiyaṁ."
}