{
  "tha-ap109:0.1_0": "Therāpadāna",
  "tha-ap109:0.2_0": "Bhikkhadāyivagga",
  "tha-ap109:0.3_0": "7. Naḷamāliyattheraapadāna",
  "tha-ap109:1.1_0": "“Padumuttarabuddhassa,",
  "tha-ap109:1.2_0": "lokajeṭṭhassa tādino;",
  "tha-ap109:1.3_0": "Tiṇatthare nisinnassa,",
  "tha-ap109:1.4_0": "upasantassa tādino.",
  "tha-ap109:2.1_0": "Naḷamālaṁ gahetvāna,",
  "tha-ap109:2.2_0": "bandhitvā bījaniṁ ahaṁ;",
  "tha-ap109:2.3_0": "Buddhassa upanāmesiṁ,",
  "tha-ap109:2.4_0": "dvipadindassa tādino.",
  "tha-ap109:3.1_0": "Paṭiggahetvā sabbaññū,",
  "tha-ap109:3.2_0": "bījaniṁ lokanāyako;",
  "tha-ap109:3.3_0": "Mama saṅkappamaññāya,",
  "tha-ap109:3.4_0": "imaṁ gāthaṁ abhāsatha.",
  "tha-ap109:4.1_0": "‘Yathā me kāyo nibbāti,",
  "tha-ap109:4.2_0": "pariḷāho na vijjati;",
  "tha-ap109:4.3_0": "Tatheva tividhaggīhi,",
  "tha-ap109:4.4_0": "cittaṁ tava vimuccatu’.",
  "tha-ap109:5.1_0": "Sabbe devā samāgacchuṁ,",
  "tha-ap109:5.2_0": "ye keci vananissitā;",
  "tha-ap109:5.3_0": "Sossāma buddhavacanaṁ,",
  "tha-ap109:5.4_0": "hāsayantañca dāyakaṁ.",
  "tha-ap109:6.1_0": "Nisinno bhagavā tattha,",
  "tha-ap109:6.2_0": "devasaṅghapurakkhato;",
  "tha-ap109:6.3_0": "Dāyakaṁ sampahaṁsento,",
  "tha-ap109:6.4_0": "imā gāthā abhāsatha.",
  "tha-ap109:7.1_0": "‘Iminā bījanidānena,",
  "tha-ap109:7.2_0": "cittassa paṇidhīhi ca;",
  "tha-ap109:7.3_0": "Subbato nāma nāmena,",
  "tha-ap109:7.4_0": "cakkavattī bhavissati.",
  "tha-ap109:8.1_0": "Tena kammāvasesena,",
  "tha-ap109:8.2_0": "sukkamūlena codito;",
  "tha-ap109:8.3_0": "Māluto nāma nāmena,",
  "tha-ap109:8.4_0": "cakkavattī bhavissati’.",
  "tha-ap109:9.1_0": "Iminā bījanidānena,",
  "tha-ap109:9.2_0": "sammānavipulena ca;",
  "tha-ap109:9.3_0": "Kappasatasahassampi,",
  "tha-ap109:9.4_0": "duggatiṁ nupapajjati.",
  "tha-ap109:10.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap109:10.2_0": "subbatā aṭṭhatiṁsa te;",
  "tha-ap109:10.3_0": "Ekūnatiṁsasahasse,",
  "tha-ap109:10.4_0": "aṭṭha mālutanāmakā.",
  "tha-ap109:11.1_0": "Paṭisambhidā catasso,",
  "tha-ap109:11.2_0": "…pe…",
  "tha-ap109:11.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap109:12.1_0": "Itthaṁ sudaṁ āyasmā naḷamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap109:13.1_0": "Naḷamāliyattherassāpadānaṁ sattamaṁ.",
  "tha-ap109:13.2_0": "Sattamabhāṇavāraṁ."
}