{
  "pv40:0.1_0": "Petavatthu",
  "pv40:0.2_0": "Mahāvagga",
  "pv40:0.3_0": "5. Ucchupetavatthu",
  "pv40:1.1_0": "“Idaṁ mama ucchuvanaṁ mahantaṁ,",
  "pv40:1.2_0": "Nibbattati puññaphalaṁ anappakaṁ;",
  "pv40:1.3_0": "Taṁ dāni me na paribhogameti,",
  "pv40:1.4_0": "Ācikkha bhante kissa ayaṁ vipāko.",
  "pv40:2.1_0": "Haññāmi khajjāmi ca vāyamāmi,",
  "pv40:2.2_0": "Parisakkāmi paribhuñjituṁ kiñci;",
  "pv40:2.3_0": "Svāhaṁ chinnathāmo kapaṇo lālapāmi,",
  "pv40:2.4_0": "Kissa kammassa ayaṁ vipāko.",
  "pv40:3.1_0": "Vighāto cāhaṁ paripatāmi chamāyaṁ,",
  "pv40:3.2_0": "Parivattāmi vāricarova ghamme;",
  "pv40:3.3_0": "Rudato ca me assukā niggalanti,",
  "pv40:3.4_0": "Ācikkha bhante kissa ayaṁ vipāko.",
  "pv40:4.1_0": "Chāto kilanto ca pipāsito ca,",
  "pv40:4.2_0": "Santassito sātasukhaṁ na vinde;",
  "pv40:4.3_0": "Pucchāmi taṁ etamatthaṁ bhadante,",
  "pv40:4.4_0": "Kathaṁ nu ucchuparibhogaṁ labheyyan”ti.",
  "pv40:5.1_0": "“Pure tuvaṁ kammamakāsi attanā,",
  "pv40:5.2_0": "Manussabhūto purimāya jātiyā;",
  "pv40:5.3_0": "Ahañca taṁ etamatthaṁ vadāmi,",
  "pv40:5.4_0": "Sutvāna tvaṁ etamatthaṁ vijāna.",
  "pv40:6.1_0": "Ucchuṁ tuvaṁ khādamāno payāto,",
  "pv40:6.2_0": "Puriso ca te piṭṭhito anvagacchi;",
  "pv40:6.3_0": "So ca taṁ paccāsanto kathesi,",
  "pv40:6.4_0": "Tassa tuvaṁ na kiñci ālapittha.",
  "pv40:7.1_0": "So ca taṁ abhaṇantaṁ ayāci,",
  "pv40:7.2_0": "‘Dehayya ucchun’ti ca taṁ avoca;",
  "pv40:7.3_0": "Tassa tuvaṁ piṭṭhito ucchuṁ adāsi,",
  "pv40:7.4_0": "Tassetaṁ kammassa ayaṁ vipāko.",
  "pv40:8.1_0": "Iṅgha tvaṁ gantvāna piṭṭhito gaṇheyyāsi,",
  "pv40:8.2_0": "Gahetvāna taṁ khādassu yāvadatthaṁ;",
  "pv40:8.3_0": "Teneva tvaṁ attamano bhavissasi,",
  "pv40:8.4_0": "Haṭṭho cudaggo ca pamodito cā”ti.",
  "pv40:9.1_0": "Gantvāna so piṭṭhito aggahesi,",
  "pv40:9.2_0": "Gahetvāna taṁ khādi yāvadatthaṁ;",
  "pv40:9.3_0": "Teneva so attamano ahosi,",
  "pv40:9.4_0": "Haṭṭho cudaggo ca pamodito cāti.",
  "pv40:10.1_0": "Ucchupetavatthu pañcamaṁ."
}