{
  "tha-ap421:0.1_0": "Therāpadāna",
  "tha-ap421:0.2_0": "Bhaddālivagga",
  "tha-ap421:0.3_0": "9. Patthodanadāyakattheraapadāna",
  "tha-ap421:1.1_0": "“Vanacārī pure āsiṁ,",
  "tha-ap421:1.2_0": "satataṁ vanakammiko;",
  "tha-ap421:1.3_0": "Patthodanaṁ gahetvāna,",
  "tha-ap421:1.4_0": "kammantaṁ agamāsahaṁ.",
  "tha-ap421:2.1_0": "Tatthaddasāsiṁ sambuddhaṁ,",
  "tha-ap421:2.2_0": "sayambhuṁ aparājitaṁ;",
  "tha-ap421:2.3_0": "Vanā piṇḍāya nikkhantaṁ,",
  "tha-ap421:2.4_0": "disvā cittaṁ pasādayiṁ.",
  "tha-ap421:3.1_0": "Parakammāyane yutto,",
  "tha-ap421:3.2_0": "puññañca me na vijjati;",
  "tha-ap421:3.3_0": "Ayaṁ patthodano atthi,",
  "tha-ap421:3.4_0": "bhojayissāmahaṁ muniṁ.",
  "tha-ap421:4.1_0": "Patthodanaṁ gahetvāna,",
  "tha-ap421:4.2_0": "sayambhussa adāsahaṁ;",
  "tha-ap421:4.3_0": "Mama nijjhāyamānassa,",
  "tha-ap421:4.4_0": "paribhuñji tadā muni.",
  "tha-ap421:5.1_0": "Tena kammena sukatena,",
  "tha-ap421:5.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap421:5.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap421:5.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap421:6.1_0": "Chattiṁsakkhattuṁ devindo,",
  "tha-ap421:6.2_0": "devarajjamakārayiṁ;",
  "tha-ap421:6.3_0": "Tettiṁsakkhattuṁ rājā ca,",
  "tha-ap421:6.4_0": "cakkavattī ahosahaṁ.",
  "tha-ap421:7.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap421:7.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap421:7.3_0": "Sukhito yasavā homi,",
  "tha-ap421:7.4_0": "patthodanassidaṁ phalaṁ.",
  "tha-ap421:8.1_0": "Bhavābhave saṁsaranto,",
  "tha-ap421:8.2_0": "labhāmi amitaṁ dhanaṁ;",
  "tha-ap421:8.3_0": "Bhoge me ūnatā natthi,",
  "tha-ap421:8.4_0": "patthodanassidaṁ phalaṁ.",
  "tha-ap421:9.1_0": "Nadīsotapaṭibhāgā,",
  "tha-ap421:9.2_0": "bhogā nibbattare mama;",
  "tha-ap421:9.3_0": "Parimetuṁ na sakkomi,",
  "tha-ap421:9.4_0": "patthodanassidaṁ phalaṁ.",
  "tha-ap421:10.1_0": "Imaṁ khāda imaṁ bhuñja,",
  "tha-ap421:10.2_0": "imamhi sayane saya;",
  "tha-ap421:10.3_0": "Tenāhaṁ sukhito homi,",
  "tha-ap421:10.4_0": "patthodanassidaṁ phalaṁ.",
  "tha-ap421:11.1_0": "Catunnavutito kappe,",
  "tha-ap421:11.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap421:11.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap421:11.4_0": "patthodanassidaṁ phalaṁ.",
  "tha-ap421:12.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap421:12.2_0": "…pe…",
  "tha-ap421:12.3_0": "viharāmi anāsavo.",
  "tha-ap421:13.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap421:13.2_0": "…pe…",
  "tha-ap421:13.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap421:14.1_0": "Paṭisambhidā catasso,",
  "tha-ap421:14.2_0": "…pe…",
  "tha-ap421:14.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap421:15.1_0": "Itthaṁ sudaṁ āyasmā patthodanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap421:16.1_0": "Patthodanadāyakattherassāpadānaṁ navamaṁ."
}