{
  "tha-ap184:0.1_0": "Therāpadāna",
  "tha-ap184:0.2_0": "Kuṭajapupphiyavagga",
  "tha-ap184:0.3_0": "2. Bandhujīvakattheraapadāna",
  "tha-ap184:1.1_0": "“Siddhattho nāma sambuddho,",
  "tha-ap184:1.2_0": "sayambhū sabbhi vaṇṇito;",
  "tha-ap184:1.3_0": "Samādhiṁ so samāpanno,",
  "tha-ap184:1.4_0": "nisīdi pabbatantare.",
  "tha-ap184:2.1_0": "Jātassare gavesanto,",
  "tha-ap184:2.2_0": "dakajaṁ pupphamuttamaṁ;",
  "tha-ap184:2.3_0": "Bandhujīvakapupphāni,",
  "tha-ap184:2.4_0": "addasaṁ samanantaraṁ.",
  "tha-ap184:3.1_0": "Ubho hatthehi paggayha,",
  "tha-ap184:3.2_0": "upāgacchiṁ mahāmuniṁ;",
  "tha-ap184:3.3_0": "Pasannacitto sumano,",
  "tha-ap184:3.4_0": "siddhatthassābhiropayiṁ.",
  "tha-ap184:4.1_0": "Catunnavutito kappe,",
  "tha-ap184:4.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap184:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap184:4.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap184:5.1_0": "Ito cātuddase kappe,",
  "tha-ap184:5.2_0": "eko āsiṁ janādhipo;",
  "tha-ap184:5.3_0": "Samuddakappo nāmena,",
  "tha-ap184:5.4_0": "cakkavattī mahabbalo.",
  "tha-ap184:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap184:6.2_0": "…pe…",
  "tha-ap184:6.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap184:7.1_0": "Itthaṁ sudaṁ āyasmā bandhujīvako thero imā gāthāyo abhāsitthāti.",
  "tha-ap184:8.1_0": "Bandhujīvakattherassāpadānaṁ dutiyaṁ."
}