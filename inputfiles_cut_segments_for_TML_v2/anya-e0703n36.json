{
  "anya-e0703n36:0_0": "Sattatiṁsatima pariccheda",
  "anya-e0703n36:1_0": "Pañcarājako",
  "anya-e0703n36:2_0": "1.",
  "anya-e0703n36:3_0": "Jeṭṭhatissaccaye tassa, mahāseno kaniṭṭhako;",
  "anya-e0703n36:4_0": "Sattavīsativassāni, rājā rajjamakārayi.",
  "anya-e0703n36:5_0": "2.",
  "anya-e0703n36:6_0": "Tassa rajjābhisekaṁ taṁ,",
  "anya-e0703n36:7_0": "Kāretuṁ paratīrato;",
  "anya-e0703n36:8_0": "So saṅghamittatthero tu,",
  "anya-e0703n36:9_0": "Kālaṁ ñatvā idhāgato.",
  "anya-e0703n36:10_0": "3.",
  "anya-e0703n36:11_0": "Tassābhisekaṁ kāretvā, aññaṁ kiccañcanekadhā;",
  "anya-e0703n36:12_0": "Mahāvihāra viddhaṁsaṁ, kātukāmo asaññato.",
  "anya-e0703n36:13_0": "4.",
  "anya-e0703n36:14_0": "Avinayavādino ete, mahāvihāravāsino;",
  "anya-e0703n36:15_0": "Vinayavādī mayaṁ rāja, iti gāhiya bhūpabhiṁ.",
  "anya-e0703n36:16_0": "5.",
  "anya-e0703n36:17_0": "Mahāvihāravāsissa, āhāraṁ deti bhikkhuno;",
  "anya-e0703n36:18_0": "Yo so sataṁ daṇḍiyo’ti, raññā daṇḍaṁ ṭhapāpayi.",
  "anya-e0703n36:19_0": "6.",
  "anya-e0703n36:20_0": "Upaddutā tehi bhikkhū, mahāvihāravāsino;",
  "anya-e0703n36:21_0": "Mahāvihāraṁ chaḍḍetvā, malayaṁ rohaṇaṁ aguṁ.",
  "anya-e0703n36:22_0": "7.",
  "anya-e0703n36:23_0": "Tena mahāvihāro’yaṁ, navavassāni chaḍḍito;",
  "anya-e0703n36:24_0": "Mahāvihāravāsīhi, bhikkhūhi āsi suññako.",
  "anya-e0703n36:25_0": "8.",
  "anya-e0703n36:26_0": "“Hoti assāmikaṁ vatthu, putuvisāmino”iti;",
  "anya-e0703n36:27_0": "Rājānaṁ saññāpetvā so, thero dummati dummatiṁ.",
  "anya-e0703n36:28_0": "9.",
  "anya-e0703n36:29_0": "Mahāvihāraṁ nāsetuṁ, laddhānumati rājato;",
  "anya-e0703n36:30_0": "Tathā kātuṁ manusse so, yojesi duṭṭhamānaso.",
  "anya-e0703n36:31_0": "10.",
  "anya-e0703n36:32_0": "Saṅghamittassa therassa, sevako rājavallabho;",
  "anya-e0703n36:33_0": "Soṇāmacco dāraṇo ca, bhikkhavo ca alajjino.",
  "anya-e0703n36:34_0": "11.",
  "anya-e0703n36:35_0": "Bhinditvā lohapāsādaṁ, sattabhūmaka muttamaṁ;",
  "anya-e0703n36:36_0": "Ghare nānappakāre ca, ito’bhayagiriṁ nayuṁ.",
  "anya-e0703n36:37_0": "12.",
  "anya-e0703n36:38_0": "Mahāvihārā nītehi, pāsādehi bahūhi ca;",
  "anya-e0703n36:39_0": "Abhayagirivihāroyaṁ, bahupāsādako ahu.",
  "anya-e0703n36:40_0": "13.",
  "anya-e0703n36:41_0": "Saṅghamittaṁ pāpamittaṁ, theraṁ soṇañca sevakaṁ;",
  "anya-e0703n36:42_0": "Āgamma subahuṁ pāpaṁ, akāsi so mahīpati.",
  "anya-e0703n36:43_0": "14.",
  "anya-e0703n36:44_0": "Mahāsilāpaṭimaṁ so, pācinatissapabbatā;",
  "anya-e0703n36:45_0": "Ānetvā’bhayagirimhi, patiṭṭhāpesi bhūpati.",
  "anya-e0703n36:46_0": "15.",
  "anya-e0703n36:47_0": "Paṭimāgharaṁ bodhigharaṁ, dhātusālaṁ manoramaṁ;",
  "anya-e0703n36:48_0": "Catusālañca kāresī, saṅkharī kukkuṭavhayaṁ.",
  "anya-e0703n36:49_0": "16.",
  "anya-e0703n36:50_0": "Saṅghamittena therena, tena dāruṇakammunā;",
  "anya-e0703n36:51_0": "Vihāro so’bhayagiri, dassaneyyo ahu tadā.",
  "anya-e0703n36:52_0": "17.",
  "anya-e0703n36:53_0": "Meghavaṇṇābhayo nāma, rañño sabbattha sākhako;",
  "anya-e0703n36:54_0": "Sakhā amacco kujjhitvā, mahāvihāranāsane.",
  "anya-e0703n36:55_0": "18.",
  "anya-e0703n36:56_0": "Coro hutvāna malayaṁ, gantvā laddhamahabbalo;",
  "anya-e0703n36:57_0": "Khandhāvāraṁ nivesesi, duratissakavāpiyaṁ.",
  "anya-e0703n36:58_0": "19.",
  "anya-e0703n36:59_0": "Tatrā’gataṁ taṁ sutvā, sahāyaṁ so mahīpati;",
  "anya-e0703n36:60_0": "Yuddhāha paccuggantvāna, khandhāvāraṁ nivesayi.",
  "anya-e0703n36:61_0": "20.",
  "anya-e0703n36:62_0": "Sādhuṁ pānañca maṁsañca, labhitvā malayāgataṁ;",
  "anya-e0703n36:63_0": "“Na sevissaṁ sahāyena, vinā raññā”ti cintiya.",
  "anya-e0703n36:64_0": "21.",
  "anya-e0703n36:65_0": "Ādāya taṁ sayaṁyeva, rattiṁ nikkhamma ekako;",
  "anya-e0703n36:66_0": "Rañño santikamāgamma, tamatthaṁ paṭivedayi.",
  "anya-e0703n36:67_0": "22.",
  "anya-e0703n36:68_0": "Tenā’bhataṁ tena saha, vissattho paribhuñjiya;",
  "anya-e0703n36:69_0": "“Kasmā coro ahu me tvaṁ, “iti rājā apucchitaṁ.",
  "anya-e0703n36:70_0": "23.",
  "anya-e0703n36:71_0": "“Tayā mahāvihārassa, nāsitattā”ti abruvi;",
  "anya-e0703n36:72_0": "“Vihāraṁ vāsayissāmi, khemametaṁ mamaccayaṁ.",
  "anya-e0703n36:73_0": "24.",
  "anya-e0703n36:74_0": "Iccheva mabravī rājā, rājānaṁ so khamāpayi;",
  "anya-e0703n36:75_0": "Tena saññāpito rājā, nagaraṁyeva āgami.",
  "anya-e0703n36:76_0": "25.",
  "anya-e0703n36:77_0": "Rājānaṁ saññapetvā so, meghavaṇṇābhayo pana;",
  "anya-e0703n36:78_0": "Raññā saha na āgañchi, dabbasambhārakāraṇā.",
  "anya-e0703n36:79_0": "26.",
  "anya-e0703n36:80_0": "Valabhā bhariyā rañño, ekaṁ lekhakadhītikā;",
  "anya-e0703n36:81_0": "Mahāvihāranāsamhi, dukkhitaṁ taṁ vināsakaṁ.",
  "anya-e0703n36:82_0": "27.",
  "anya-e0703n36:83_0": "Theraṁ mārāpayi kuddhā, saṁgahetvāna vaḍḍhakiṁ;",
  "anya-e0703n36:84_0": "Thūpārāmaṁ vināsetuṁ, āgataṁ duṭṭhamānasaṁ.",
  "anya-e0703n36:85_0": "28.",
  "anya-e0703n36:86_0": "Mārāpetvā saṅghamitta-ttheraṁ dāruṇakārakaṁ;",
  "anya-e0703n36:87_0": "Soṇāmaccadāraṇañca, ghātayiṁsu asaññakā.",
  "anya-e0703n36:88_0": "29.",
  "anya-e0703n36:89_0": "Ānetvā dabbasambhāraṁ, meghavaṇṇābhayo tu so;",
  "anya-e0703n36:90_0": "Mahāvihārenekāni, pariveṇāni kārayi.",
  "anya-e0703n36:91_0": "30.",
  "anya-e0703n36:92_0": "Abhayenabhayo tasmiṁ, vūpasante tu bhikkhavo;",
  "anya-e0703n36:93_0": "Mahāvihāraṁ vāsesuṁ, āgantvāna tato tato.",
  "anya-e0703n36:94_0": "31.",
  "anya-e0703n36:95_0": "Rājā mahābodhighare, pacchimāya disāya tu;",
  "anya-e0703n36:96_0": "Kāretvā loharūpāni, ṭhapāpesi duve tu so.",
  "anya-e0703n36:97_0": "32.",
  "anya-e0703n36:98_0": "Dakkhiṇārāmavāsimhi, kuhake jimhamānase;",
  "anya-e0703n36:99_0": "Pasīditvā pāpamitte, tissatthere asaññate.",
  "anya-e0703n36:100_0": "33.",
  "anya-e0703n36:101_0": "Mahāvihārasīmante, uyyāne jotināmake;",
  "anya-e0703n36:102_0": "Jetavanavihāraṁ so, vārayantopi kārayi.",
  "anya-e0703n36:103_0": "34.",
  "anya-e0703n36:104_0": "Tato sīmaṁ samugghātuṁ, bhikkhusaṅghamayāciso;",
  "anya-e0703n36:105_0": "Adātukāmā taṁ bhikkhū, vihāramhā apakkamuṁ.",
  "anya-e0703n36:106_0": "35.",
  "anya-e0703n36:107_0": "Idha sīmāsamugghātaṁ, parehi kariyamānakaṁ;",
  "anya-e0703n36:108_0": "Kopetuṁ bhikkhavo keci, nilīyiṁsu tahiṁ tahiṁ.",
  "anya-e0703n36:109_0": "36.",
  "anya-e0703n36:110_0": "Mahāvihāro navamāse, evaṁ bhikkhūhi vajjito;",
  "anya-e0703n36:111_0": "“Samugghātaṁ karimhā”ti-pare bhikkhū amaññisuṁ.",
  "anya-e0703n36:112_0": "37.",
  "anya-e0703n36:113_0": "Tato sīmāsamugghāte, byāpāre pariniṭṭhite;",
  "anya-e0703n36:114_0": "Mahāvihāraṁ vāsesuṁ, idhāgantvāna bhikkhavo.",
  "anya-e0703n36:115_0": "38.",
  "anya-e0703n36:116_0": "Tassa vihāragāhissa, tissattherassa codanā;",
  "anya-e0703n36:117_0": "Antimavatthunā āsi, bhūtatthaṁ saṅghamajjhagā.",
  "anya-e0703n36:118_0": "39.",
  "anya-e0703n36:119_0": "Vinicchiya mahāmacco, tathā dhammikasammato;",
  "anya-e0703n36:120_0": "Uppabbājesi dhammena, taṁ anicchāya rājino.",
  "anya-e0703n36:121_0": "40.",
  "anya-e0703n36:122_0": "Soyeva rājā kāresi, vihāraṁ maṇihīrakaṁ;",
  "anya-e0703n36:123_0": "Tayo vihāre kāresi, devālayaṁ vināsiya.",
  "anya-e0703n36:124_0": "41.",
  "anya-e0703n36:125_0": "Gokaṇṇaṁ erakāpillaṁ, kalandabrāhmaṇagāmake;",
  "anya-e0703n36:126_0": "Migagāmavihārañca, gaṅgasenakapabbataṁ.",
  "anya-e0703n36:127_0": "42.",
  "anya-e0703n36:128_0": "Pacchimāya disāyātha, dhātusenañca pabbataṁ;",
  "anya-e0703n36:129_0": "Rājā mahāvihārañca, kokavātamhi kārayi.",
  "anya-e0703n36:130_0": "43.",
  "anya-e0703n36:131_0": "Rūpārammavihārañca, cūḷaviṭṭañca kārayi;",
  "anya-e0703n36:132_0": "Uttarābhayasavhe ca, duve bhikkhūnupassaye.",
  "anya-e0703n36:133_0": "44.",
  "anya-e0703n36:134_0": "Kālaveḷakayakkhassa, ṭhāne thūpañca kārayi;",
  "anya-e0703n36:135_0": "Dīpamhi jiṇṇakāvāse, bahū ca paṭisaṅkhari.",
  "anya-e0703n36:136_0": "45.",
  "anya-e0703n36:137_0": "Saṅghattherasahassassa, sahassagghamadāsi so;",
  "anya-e0703n36:138_0": "Theradānañca sabbesaṁ, anuvassañca cīvaraṁ.",
  "anya-e0703n36:139_0": "46.",
  "anya-e0703n36:140_0": "Annapānādidānassa, paricchedo na vijjati;",
  "anya-e0703n36:141_0": "Subhikkhatthāya kāresi, so’va soḷasa vāpiyo.",
  "anya-e0703n36:142_0": "47.",
  "anya-e0703n36:143_0": "Maṇihīramahāvāpiṁ, jalluraṁ khāṇunāmakaṁ;",
  "anya-e0703n36:144_0": "Mahāmaṇiṁ kokavātaṁ, morakaparakavāpikaṁ.",
  "anya-e0703n36:145_0": "48.",
  "anya-e0703n36:146_0": "Kubbāhakaṁ vāhakañca, rattamālakaṇḍakampi ca;",
  "anya-e0703n36:147_0": "Tissavaḍḍhamānakañca, veḷaṅgaviṭṭhikampi ca.",
  "anya-e0703n36:148_0": "49.",
  "anya-e0703n36:149_0": "Mahāgallacīravāpiṁ, mahādāragallakampi ca;",
  "anya-e0703n36:150_0": "Kāḷapāsāṇavāpiñca, imā soḷasa vāpiyo.",
  "anya-e0703n36:151_0": "50.",
  "anya-e0703n36:152_0": "Gaṅgāya pabbavavhaṁso, mahāmātiñca kārayi;",
  "anya-e0703n36:153_0": "Evaṁ puññamapuññañca, subahuṁ so upācinīti.",
  "anya-e0703n36:154_0": "51.",
  "anya-e0703n36:155_0": "Asādhusaṅgamenevaṁ, yāvajīvaṁ subhāsubhaṁ;",
  "anya-e0703n36:156_0": "Katvā gato yathākammaṁ, so mahāsenabhūpati.",
  "anya-e0703n36:157_0": "52.",
  "anya-e0703n36:158_0": "Tasmā asādhusaṁsaggaṁ, ārakā parivajjiya;",
  "anya-e0703n36:159_0": "Ahiṁ vā’si visaṁ khippaṁ, kareyya’tthahitaṁ budho.",
  "anya-e0703n36:160_0": "53.",
  "anya-e0703n36:161_0": "Ahu rājā sirimegha-vaṇṇo tassa suto tato;",
  "anya-e0703n36:162_0": "Vandhātā viya lokassa, sabbasampattidāyako.",
  "anya-e0703n36:163_0": "54.",
  "anya-e0703n36:164_0": "Mahāsenena pāpānaṁ, vasagena vināsite;",
  "anya-e0703n36:165_0": "Mahāvihāre sabbepi, sannipātiya bhikkhavo.",
  "anya-e0703n36:166_0": "55.",
  "anya-e0703n36:167_0": "Upasaṅkamma vanditvā, nisinno pucchi sādaro;",
  "anya-e0703n36:168_0": "“Pitarā saṅghamittassa, sahāyena vināsitaṁ.",
  "anya-e0703n36:169_0": "56.",
  "anya-e0703n36:170_0": "Kiṁ kimevā”ti āhaṁsu, bhikkhavo taṁ narissaraṁ;",
  "anya-e0703n36:171_0": "“Sīmāyugghāṭanaṁ kātuṁ, vāyamitvāpi te pitā.",
  "anya-e0703n36:172_0": "57.",
  "anya-e0703n36:173_0": "Nāsakkhi antosīmāyaṁ, bhikkhūnaṁ vijjamānato;",
  "anya-e0703n36:174_0": "Bhūmigabbhanilīnāhi, sattāsuṁ ettha bhikkhavo.",
  "anya-e0703n36:175_0": "58.",
  "anya-e0703n36:176_0": "Amacco soṇāmacco ca, saṅghamitto ca pāpiyo;",
  "anya-e0703n36:177_0": "Rājānaṁ saññāpetvāna, apuññaṁ tena kārayuṁ.",
  "anya-e0703n36:178_0": "59.",
  "anya-e0703n36:179_0": "Bhinditvā lohapāsādaṁ, sattabhūmakamuttamaṁ;",
  "anya-e0703n36:180_0": "Ghare nānappakāre ca, ito’bhayagiriṁ nayuṁ.",
  "anya-e0703n36:181_0": "60.",
  "anya-e0703n36:182_0": "Māsake catubuddhehi, nivutthe cetiyaṅgaṇe;",
  "anya-e0703n36:183_0": "Vapāpesuñca duppaññā, passa bālasamāgamaṁ”.",
  "anya-e0703n36:184_0": "61.",
  "anya-e0703n36:185_0": "Taṁ sutvā pitukammaṁ so, nibbinno bālasaṅgame;",
  "anya-e0703n36:186_0": "Pitarā nāsitaṁ tattha, sabbaṁ pākatikaṁ akā.",
  "anya-e0703n36:187_0": "62.",
  "anya-e0703n36:188_0": "Lohapāsādamagado’va, kāsi pāsādamuttamaṁ;",
  "anya-e0703n36:189_0": "Rañño mahāpanādassa, dassento viya bhūtale.",
  "anya-e0703n36:190_0": "63.",
  "anya-e0703n36:191_0": "Pariveṇāni sabbāni, nāsitāni nivesayi;",
  "anya-e0703n36:192_0": "Bhoge ārāmikānañca, yathāṭhāne ṭhapesi so.",
  "anya-e0703n36:193_0": "64.",
  "anya-e0703n36:194_0": "Pitarā paccayānañca, pacchinnattā vibuddhinā;",
  "anya-e0703n36:195_0": "Chiddāvāsaṁ ghanāvāsaṁ, vihāraṁ’kāsi buddhimā.",
  "anya-e0703n36:196_0": "65.",
  "anya-e0703n36:197_0": "Kārite pitarā joti vanece’so vihārake;",
  "anya-e0703n36:198_0": "Kammaṁ vippakataṁ sabbaṁ, niṭṭhāpesi narissaro.",
  "anya-e0703n36:199_0": "66.",
  "anya-e0703n36:200_0": "Therassā’tha mahindassa, samaṇindassa sununo;",
  "anya-e0703n36:201_0": "Sutvāna manujindo so, pavattiṁ sabbamādito.",
  "anya-e0703n36:202_0": "67.",
  "anya-e0703n36:203_0": "Pasīditvā guṇe tassa, rājā dippapasādake;",
  "anya-e0703n36:204_0": "“Issaro vata dīpassa, thero” iti vicintiya.",
  "anya-e0703n36:205_0": "68.",
  "anya-e0703n36:206_0": "Paṭibimbaṁ suvaṇṇassa, katvā tammāṇa nissitaṁ;",
  "anya-e0703n36:207_0": "Pubbakattikamāsassa, pabbapakkhe tu sattame.",
  "anya-e0703n36:208_0": "69.",
  "anya-e0703n36:209_0": "Dine netvā cetiyamba-thale therambasaññite;",
  "anya-e0703n36:210_0": "Tatraṭṭhame nivāsetvā, tato tu navame pana.",
  "anya-e0703n36:211_0": "70.",
  "anya-e0703n36:212_0": "Mahāsenaṁ gahetvā so, devasenā samūpamaṁ;",
  "anya-e0703n36:213_0": "Orodhe nagare ceva, geharakkhaṇake vinā.",
  "anya-e0703n36:214_0": "71.",
  "anya-e0703n36:215_0": "Laṁkādīpe ca sakale, sabbe ādāya bhikkhavo;",
  "anya-e0703n36:216_0": "Vissajjetvā manusse ca, nagare cārakaṭṭhite.",
  "anya-e0703n36:217_0": "72.",
  "anya-e0703n36:218_0": "Paṭṭhapetvā mahādānaṁ, ayañcākhilapāṇinaṁ;",
  "anya-e0703n36:219_0": "Pūjaṁ sabbopahārehi, karonto ca anūpamaṁ.",
  "anya-e0703n36:220_0": "73.",
  "anya-e0703n36:221_0": "Paccuggamanametassa, dīpasatthussa satthuno;",
  "anya-e0703n36:222_0": "Varaputtassa so katvā, devarājā’va satthuno.",
  "anya-e0703n36:223_0": "74.",
  "anya-e0703n36:224_0": "Cetiyambathalā yāva, nagaraṁ sādhusajjayi;",
  "anya-e0703n36:225_0": "Maggaṁ vesālito yāva, sāvatthinagaraṁ yathā.",
  "anya-e0703n36:226_0": "75.",
  "anya-e0703n36:227_0": "Vissajjetvā tahiṁ bhogaṁ, sabbaṁ therassa so pitā;",
  "anya-e0703n36:228_0": "Rājā moggaliputtassa, therassā’gamane viya.",
  "anya-e0703n36:229_0": "76.",
  "anya-e0703n36:230_0": "Datvā tattha mahādānaṁ, kapaṇaddhivanibbake;",
  "anya-e0703n36:231_0": "Bhikkhavopi ca tosetvā, paccayehi catūhi’pi.",
  "anya-e0703n36:232_0": "77.",
  "anya-e0703n36:233_0": "Therassā’gamane evaṁ, passatūti mahājane;",
  "anya-e0703n36:234_0": "Gahetvā taṁmahantena, sakkārena mahāyaso.",
  "anya-e0703n36:235_0": "78.",
  "anya-e0703n36:236_0": "Tamhā oruyha so mahā, sayaṁ hutvā purecaro;",
  "anya-e0703n36:237_0": "Bhikkhavo cāpi katvāna, parivāre samantato.",
  "anya-e0703n36:238_0": "79.",
  "anya-e0703n36:239_0": "Therassa bimbaṁ sovaṇṇaṁ, khirasāgaramajjhago;",
  "anya-e0703n36:240_0": "Sañjhā ghanaparikkhitto, hemameru’va sobhatha.",
  "anya-e0703n36:241_0": "80.",
  "anya-e0703n36:242_0": "Vesālinagaraṁ suttaṁ, desetuṁ lokanāyako;",
  "anya-e0703n36:243_0": "Agamā evamevāti, dassesi ca mahājanaṁ.",
  "anya-e0703n36:244_0": "81.",
  "anya-e0703n36:245_0": "Evaṁ karonto sakkāra-sammānaṁ so narāsabho;",
  "anya-e0703n36:246_0": "Nagarassa’ssa pācina-dvārapasse sayaṁkataṁ.",
  "anya-e0703n36:247_0": "82.",
  "anya-e0703n36:248_0": "Upasaṅkamma sāyaṇhe, vihāraṁ sotthiyā karaṁ;",
  "anya-e0703n36:249_0": "Tīhaṁ tatthāpi vāsesi, bimbaṁ taṁ jinasununo.",
  "anya-e0703n36:250_0": "83.",
  "anya-e0703n36:251_0": "Nagaraṁ sādhusajjetvā, tato dvādasame dine;",
  "anya-e0703n36:252_0": "Satthussā’dippavesamhi, puraṁ rājagahaṁ yathā.",
  "anya-e0703n36:253_0": "84.",
  "anya-e0703n36:254_0": "Paṭimaṁ nīharitvā taṁ, vihāraṁ sotthiyā karaṁ;",
  "anya-e0703n36:255_0": "Nagare sāgarākāre, vattamāne mahāmahe.",
  "anya-e0703n36:256_0": "85.",
  "anya-e0703n36:257_0": "Mahāvihāraṁ netvāna, temāsaṁ bodhiyaṅgaṇe;",
  "anya-e0703n36:258_0": "Nivāsetvā pavesetvā, teneva vidhinā puraṁ.",
  "anya-e0703n36:259_0": "86.",
  "anya-e0703n36:260_0": "Rājagehasamīpamhi, pubbadakkhiṇakoṇake;",
  "anya-e0703n36:261_0": "Paṭibimbassa kāresi, tassa sādhunivesanaṁ.",
  "anya-e0703n36:262_0": "87.",
  "anya-e0703n36:263_0": "Kāretvā iddhiyādīnaṁ, paṭimāyo visārado;",
  "anya-e0703n36:264_0": "Therena saha tatthe’va, nivesesi mahāpati.",
  "anya-e0703n36:265_0": "88.",
  "anya-e0703n36:266_0": "Ārakkhaṁ paṭṭhapetvā, pūjāya ca paribbayaṁ;",
  "anya-e0703n36:267_0": "Anusaṁvaccharaṁ kātuṁ, evameva niyojayi.",
  "anya-e0703n36:268_0": "89.",
  "anya-e0703n36:269_0": "Tassāṇamanurakkhantā, rājā tabbaṁsikā idha;",
  "anya-e0703n36:270_0": "Yāva’jjaparirakkhanti, taṁ vidhiṁ na vināsiya.",
  "anya-e0703n36:271_0": "90.",
  "anya-e0703n36:272_0": "Pavāraṇādine netvā, vihāraṁ nagarā tato;",
  "anya-e0703n36:273_0": "Kātuṁ terasiyaṁ pūjaṁ, anuvassaṁ niyojayi.",
  "anya-e0703n36:274_0": "91.",
  "anya-e0703n36:275_0": "Vihāre abhaye tissa-vasabhe bodhipādape;",
  "anya-e0703n36:276_0": "Silāvediñca kāresi, pākārañca manoharaṁ.",
  "anya-e0703n36:277_0": "92.",
  "anya-e0703n36:278_0": "Navame tassa vassamhi, dāṭhādhātuṁ mahesino;",
  "anya-e0703n36:279_0": "Brāhmaṇīkāci ādiya, kāliṅgamhā idhānayi.",
  "anya-e0703n36:280_0": "93.",
  "anya-e0703n36:281_0": "Dāṭhādhātussa vaṁsamhi, vuttena vidhasanaṁ;",
  "anya-e0703n36:282_0": "Gahetvā bahumānena, katvā sammā na muttamaṁ.",
  "anya-e0703n36:283_0": "94.",
  "anya-e0703n36:284_0": "Pakkhiptvā karaṇḍamhi, visuddhaphalikumbhavhe;",
  "anya-e0703n36:285_0": "Devānaṁpiyatissena, rājavatthumhi kārite.",
  "anya-e0703n36:286_0": "95.",
  "anya-e0703n36:287_0": "Dhammacakkavhaye gehe, vaḍḍhayittha mahīpati;",
  "anya-e0703n36:288_0": "Tato paṭṭhāya taṁ gehaṁ, dāṭhādhātugharaṁ ahu.",
  "anya-e0703n36:289_0": "96.",
  "anya-e0703n36:290_0": "Rājā satasahassānaṁ, navakaṁ puṇnamānaso;",
  "anya-e0703n36:291_0": "Vissajjetvā tato’kāsi, dāṭhādhātu mahāmahaṁ.",
  "anya-e0703n36:292_0": "97.",
  "anya-e0703n36:293_0": "Anusaṁvaccharaṁ netvā, vihāramabhayuttaraṁ;",
  "anya-e0703n36:294_0": "Tassa pūjāvidhiṁ kātu, meva rūpaṁ niyojayi.",
  "anya-e0703n36:295_0": "98.",
  "anya-e0703n36:296_0": "Aṭṭhārasa vihāre ca, kārāpesi mahīpati;",
  "anya-e0703n36:297_0": "Anukampāya pāṇīnaṁ, vāpiyo ca thirodikā.",
  "anya-e0703n36:298_0": "99.",
  "anya-e0703n36:299_0": "Bodhi pūjādi puññāni, appameyyāni kāriya;",
  "anya-e0703n36:300_0": "Aṭṭhavīsatime vasse, gabho so tassa yā gati.",
  "anya-e0703n36:301_0": "100.",
  "anya-e0703n36:302_0": "Kumāro jeṭṭhatiso’tha, bhātā tassa kaniṭṭhako;",
  "anya-e0703n36:303_0": "Chattaṁ laṅghesi saṁkāyaṁ, dantasippamhi kovido.",
  "anya-e0703n36:304_0": "101.",
  "anya-e0703n36:305_0": "Katvā kammāni catrāni, dukkarāni mahīpati;",
  "anya-e0703n36:306_0": "Sippāyatana metaṁ so, tikkhāpesi bahūjane.",
  "anya-e0703n36:307_0": "102.",
  "anya-e0703n36:308_0": "Aṇatto pitunā’kāsi, iddhihi viya nimmitaṁ;",
  "anya-e0703n36:309_0": "Bodhisatta sarūpañca, rūpaṁ sādhu manoharaṁ.",
  "anya-e0703n36:310_0": "103.",
  "anya-e0703n36:311_0": "Apasayañca pallaṅkaṁ, chattaṁ ratanamaṇḍapaṁ;",
  "anya-e0703n36:312_0": "Citradantamayaṁ kiñci, tassa kammaṁ tahiṁ tahiṁ.",
  "anya-e0703n36:313_0": "104.",
  "anya-e0703n36:314_0": "Katvā so navavassāni, laṁkādīpānusāsanaṁ;",
  "anya-e0703n36:315_0": "Anekāni ca puññāni, yathākammamupāgami.",
  "anya-e0703n36:316_0": "105.",
  "anya-e0703n36:317_0": "Buddhadāso tato tassa, putto āsi mahīpati;",
  "anya-e0703n36:318_0": "Guṇānaṁ ākaro sabba-ratanānaṁ’va sāgaro.",
  "anya-e0703n36:319_0": "106.",
  "anya-e0703n36:320_0": "Sukhaṁ sabbapayogehi, karonto dīpavāsinaṁ;",
  "anya-e0703n36:321_0": "Rakkhamālakamandaṁ’va, puraṁ vassavaṇo dhanī.",
  "anya-e0703n36:322_0": "107.",
  "anya-e0703n36:323_0": "Paññā puññaguṇūpeto, visuddhkaruṇālayo;",
  "anya-e0703n36:324_0": "Tathā dasahi rājūnaṁ, dhammehi samugāgato.",
  "anya-e0703n36:325_0": "108.",
  "anya-e0703n36:326_0": "Catasso agati hitvā, kārayanto vinicchayaṁ;",
  "anya-e0703n36:327_0": "Janaṁ saṅgahavatthūhi, saṅgahesi catūhipi.",
  "anya-e0703n36:328_0": "109.",
  "anya-e0703n36:329_0": "Cariyaṁ bodhisattānaṁ, dassento sakkhipāṇinaṁ;",
  "anya-e0703n36:330_0": "Pitā’va putte so satte, anukampittha bhūpati.",
  "anya-e0703n36:331_0": "110.",
  "anya-e0703n36:332_0": "Daḷidde dhanadānenā-kāsi puṇṇamanorathe;",
  "anya-e0703n36:333_0": "Sukhite sabbabhogānaṁ, jīvitassa ca guttiyā.",
  "anya-e0703n36:334_0": "111.",
  "anya-e0703n36:335_0": "Sādhavo saṅgahenā’tha, niggahena asādhavo;",
  "anya-e0703n36:336_0": "Gilāne vejjakammena, saṅgahesi mahāpati.",
  "anya-e0703n36:337_0": "112.",
  "anya-e0703n36:338_0": "Atheka divasaṁ rājā, hatthikkhandhavaraṁ gato;",
  "anya-e0703n36:339_0": "Tissavāpiṁ nahānattaṁ, gacchamāno mahāpathe.",
  "anya-e0703n36:340_0": "113.",
  "anya-e0703n36:341_0": "Addase’kaṁ mahānāgaṁ, kucchiroga samappitaṁ;",
  "anya-e0703n36:342_0": "Puttabhāga vihārassa, passe vammikamatthake.",
  "anya-e0703n36:343_0": "114.",
  "anya-e0703n36:344_0": "Uttāna mudare rogaṁ, dassetuṁ gaṇḍasaññitaṁ;",
  "anya-e0703n36:345_0": "Nipannaṁso’tha cintesi, tato rogīti nicchayaṁ.",
  "anya-e0703n36:346_0": "115.",
  "anya-e0703n36:347_0": "Atho’ruyha mahānāgaṁ, mahānāga samīpago;",
  "anya-e0703n36:348_0": "Evamāha mahānāgo, mahānāgamanāgavā.",
  "anya-e0703n36:349_0": "116.",
  "anya-e0703n36:350_0": "“Kāraṇaṁ te mahānāga, ñātamāgamane mayā;",
  "anya-e0703n36:351_0": "Kumhe khalu mahātejā, khippaṁ kuppitasīlino.",
  "anya-e0703n36:352_0": "117.",
  "anya-e0703n36:353_0": "Tasmā phusitvā taṁ kammaṁ, kātuṁ sakkā na te mayā;",
  "anya-e0703n36:354_0": "Aphusitvāpi no sakkā, kinnukātabbametthī’ti.",
  "anya-e0703n36:355_0": "118.",
  "anya-e0703n36:356_0": "Evaṁ putte phaṇindo so, kevalaṁ phaṇamattano;",
  "anya-e0703n36:357_0": "Bilassa’nto pavesetvā, nippajjittha samāhito.",
  "anya-e0703n36:358_0": "119.",
  "anya-e0703n36:359_0": "Athe’na mupasaṅkamma, ucchaṅgagatamattano",
  "anya-e0703n36:360_0": "Satthaṁ gahetvā phāletvā, udaraṁ tassa bhogino.",
  "anya-e0703n36:361_0": "120.",
  "anya-e0703n36:362_0": "Nīharitvā tato dosaṁ, katvā bhesajja muttamaṁ;",
  "anya-e0703n36:363_0": "Sappaṁ taṁ taṅkhaṇeneva, akāsi sukhitaṁ tadā.",
  "anya-e0703n36:364_0": "121.",
  "anya-e0703n36:365_0": "Attāna mevaṁ thomesi, “mahākāruññataṁ mama;",
  "anya-e0703n36:366_0": "Tiracchānāpi jāniṁsu, sādhu rajjanti me kataṁ.",
  "anya-e0703n36:367_0": "122.",
  "anya-e0703n36:368_0": "Disvā sukhitamattānaṁ, pannagoso mahīpatiṁ;",
  "anya-e0703n36:369_0": "Pūjetuṁ tassa pādāsi, mahagghaṁ maṇimattano.",
  "anya-e0703n36:370_0": "123.",
  "anya-e0703n36:371_0": "Silāmayāya sambuddha-paṭimāya akārayi;",
  "anya-e0703n36:372_0": "Miṇiṁ taṁ nayanaṁ rājā, vihāre abhayuttare.",
  "anya-e0703n36:373_0": "124.",
  "anya-e0703n36:374_0": "Ekopi bhikkhu bhikkhanto, gāmamhi thusavitthike;",
  "anya-e0703n36:375_0": "Sukkhaṁ bhikkhaṁ labhitvāna, khīrabhikkhāya sañcaraṁ.",
  "anya-e0703n36:376_0": "125.",
  "anya-e0703n36:377_0": "Khīraṁ sappāṇakaṁ laddhā, paribhuñjittha kucchiyaṁ;",
  "anya-e0703n36:378_0": "Pāṇakā balavo hutvā, udaraṁ tassa khādisuṁ.",
  "anya-e0703n36:379_0": "126.",
  "anya-e0703n36:380_0": "Tato so upasaṅkamma, taṁ nivedesi rājino;",
  "anya-e0703n36:381_0": "Rāha “jāto sulo’yaṁ, kadā hāresi kīdisaṁ.",
  "anya-e0703n36:382_0": "127.",
  "anya-e0703n36:383_0": "So āha” thusavitthimhi, gāme khīrena bhojane;",
  "anya-e0703n36:384_0": "Bhutte’ti rājā aññāsi, khīraṁ sappāṇakaṁ”iti.",
  "anya-e0703n36:385_0": "128.",
  "anya-e0703n36:386_0": "Tadeva asso ekopi, sirāvedha tikicchiyo;",
  "anya-e0703n36:387_0": "Rājā tassa sirāvedhaṁ, katvā ādāya lohitaṁ.",
  "anya-e0703n36:388_0": "129.",
  "anya-e0703n36:389_0": "Pāyetvā samaṇaṁ āha, muhuttaṁ vītināmaya;",
  "anya-e0703n36:390_0": "“Assalohitamaṇa”nti, taṁ sutvā samaṇovami.",
  "anya-e0703n36:391_0": "130.",
  "anya-e0703n36:392_0": "Pāṇakā lohiteneva, nikkhamiṁbhu sukhī ahu;",
  "anya-e0703n36:393_0": "Bhikkhuṁ rājā nivedesi, kucchimevaṁ panattano.",
  "anya-e0703n36:394_0": "131.",
  "anya-e0703n36:395_0": "“Ekasatthapahārena, pāṇakā samaṇo hayo;",
  "anya-e0703n36:396_0": "Katā arogā sammame, vejjakamma maho”iti.",
  "anya-e0703n36:397_0": "132.",
  "anya-e0703n36:398_0": "Pivanto toyameko hi,",
  "anya-e0703n36:399_0": "Deḍḍubhaṇḍaṁ majāniya;",
  "anya-e0703n36:400_0": "Ajjhoharitadā āsi,",
  "anya-e0703n36:401_0": "Tato jāto’ti deḍḍubho.",
  "anya-e0703n36:402_0": "133.",
  "anya-e0703n36:403_0": "Anto tu ditthatuṇḍena, tena dukkhena pīḷito;",
  "anya-e0703n36:404_0": "Rājānaṁ magamā rājā, nidānaṁ tassa pucchiya.",
  "anya-e0703n36:405_0": "133.",
  "anya-e0703n36:406_0": "Anto tu ditthatuṇḍena, tena dukkhena pīḷito;",
  "anya-e0703n36:407_0": "Rājānaṁ magamā rājā, nidānaṁ tassa pucchiya.",
  "anya-e0703n36:408_0": "134.",
  "anya-e0703n36:409_0": "Aentā sappo’ti viññāya, sattāhamupavāsiya;",
  "anya-e0703n36:410_0": "Sunhātasu vilittañca, sayane sādhu santhate.",
  "anya-e0703n36:411_0": "135.",
  "anya-e0703n36:412_0": "Sayāpesi tato so’ti, niddāya mukhamattano;",
  "anya-e0703n36:413_0": "Vivaritvā tadā sutto, tato tassa mukhantike.",
  "anya-e0703n36:414_0": "136.",
  "anya-e0703n36:415_0": "Maṁsapesiṁ ṭhapāpesi, sarajjuṁ tassa niggato;",
  "anya-e0703n36:416_0": "Gandhena taṁ ḍaṁsitvāna, anto visitumārabhi.",
  "anya-e0703n36:417_0": "137.",
  "anya-e0703n36:418_0": "Rajjuyā’tha gahetvāna, samākaḍḍhika pāṇiyaṁ;",
  "anya-e0703n36:419_0": "Udake pātayitvāna, idaṁ vacanamabravi.",
  "anya-e0703n36:420_0": "138.",
  "anya-e0703n36:421_0": "“Vejjo ahosi sammāsa-mbuddhassa kira jīvako;",
  "anya-e0703n36:422_0": "Kammaṁ vijjati lokassa, kataṁ kiṁtena dukkaraṁ.",
  "anya-e0703n36:423_0": "139.",
  "anya-e0703n36:424_0": "Īdisaṁ kasirāso’pi, kammaṁ natthe’ttha saṁsayo;",
  "anya-e0703n36:425_0": "Sabbādarena kubbanto, aho puñño dayo mama.",
  "anya-e0703n36:426_0": "140.",
  "anya-e0703n36:427_0": "Tathā helloligāmamhi, caṇḍāli muḷhagabbhiniṁ;",
  "anya-e0703n36:428_0": "Jātaṁ sattasu vāresu, sagabbhaṁ sukhitaṁ akā.",
  "anya-e0703n36:429_0": "141.",
  "anya-e0703n36:430_0": "Vātabodhena eko’pi, bhikkhu uṭṭhāpito ahu;",
  "anya-e0703n36:431_0": "Gopānasī gatetamhi, dukkhāmocesi buddhimā.",
  "anya-e0703n36:432_0": "142.",
  "anya-e0703n36:433_0": "Pivantassāpi maṇḍūka, jībayuttaṁ jalaṁ lahuṁ;",
  "anya-e0703n36:434_0": "Nāsikā bilato gantvā, bījamāruyha matthakaṁ.",
  "anya-e0703n36:435_0": "143.",
  "anya-e0703n36:436_0": "Bhijjitvā āsi maṇḍūko, so vuddho tattha gacchati;",
  "anya-e0703n36:437_0": "Meghassā’gamane tena, so’nibbajjati māṇavo.",
  "anya-e0703n36:438_0": "144.",
  "anya-e0703n36:439_0": "Phāletvā matthakaṁ rājā, maṇḍūkamapanīya so;",
  "anya-e0703n36:440_0": "Kapālāni ghaṭetvāna-kāsi pākatikaṁ khaṇe.",
  "anya-e0703n36:441_0": "145.",
  "anya-e0703n36:442_0": "Hitatthaṁ dīpāvāsinaṁ, gāme gāme mahīpati;",
  "anya-e0703n36:443_0": "Kāretvā vejjasālāyo, vajje tattha niyojayi.",
  "anya-e0703n36:444_0": "146.",
  "anya-e0703n36:445_0": "Sabbesaṁ vajjasatthānaṁ, katvā sāratthasaṅgahaṁ;",
  "anya-e0703n36:446_0": "Ṭhapesi vejje dīpassa, tikicchatthamanāgate;",
  "anya-e0703n36:447_0": "Yojesi vejja mekekaṁ, rājā gāma dvipañcake.",
  "anya-e0703n36:448_0": "147.",
  "anya-e0703n36:449_0": "Adā visaddha khettānaṁ, vejjānamupajīvanaṁ;",
  "anya-e0703n36:450_0": "Vejjehatthīnamassānaṁ, balassa ca niyojayi.",
  "anya-e0703n36:451_0": "148.",
  "anya-e0703n36:452_0": "Piṭṭhasappinamanvānaṁ, sālāyo ca tahiṁ tahiṁ;",
  "anya-e0703n36:453_0": "Kāresi saha bhogena, sālāyo ca mahāpathe.",
  "anya-e0703n36:454_0": "149.",
  "anya-e0703n36:455_0": "Niccamassosi saddhammaṁ, sakkatvā dhammabhāṇake;",
  "anya-e0703n36:456_0": "Dhammabhāṇakavaṭṭañca, paṭṭhapesi tahiṁ tahiṁ.",
  "anya-e0703n36:457_0": "150.",
  "anya-e0703n36:458_0": "Sāṭakantarato katvā, sattha vaṭṭiṁ mahādayo;",
  "anya-e0703n36:459_0": "Diṭṭhe diṭṭhe pamocesi, dukkhamhā dukkhite jane.",
  "anya-e0703n36:460_0": "151.",
  "anya-e0703n36:461_0": "Atheka divasaṁ rājā, rājābharaṇa maṇḍito;",
  "anya-e0703n36:462_0": "Saddhiṁ gacchati senāya, devehi viya vāsavo.",
  "anya-e0703n36:463_0": "152.",
  "anya-e0703n36:464_0": "Taṁ disvā sirisobhagga-maggaṁ pattaṁ mahī patiṁ;",
  "anya-e0703n36:465_0": "Rājiddhihi virājantaṁ, baddhavero bhavantare.",
  "anya-e0703n36:466_0": "153.",
  "anya-e0703n36:467_0": "Kuṭṭhi eko pakuppitvā, haṭṭhenāhaniyā’vatiṁ;",
  "anya-e0703n36:468_0": "Pothento tañca pothento, bhūmiṁ kattarayaṭṭhiyā.",
  "anya-e0703n36:469_0": "154.",
  "anya-e0703n36:470_0": "Akkosesi anekehi, akkosavacanehi ca;",
  "anya-e0703n36:471_0": "Vippakāraṁmimaṁ disvā, dūrato’va mahīpati.",
  "anya-e0703n36:472_0": "155.",
  "anya-e0703n36:473_0": "“Nāhaṁ sarāmi sattassa, kassā’pi katamappiyaṁ;",
  "anya-e0703n36:474_0": "Pubbaverī ayaṁ jātu, nibbāpessāmitaṁ” iti.",
  "anya-e0703n36:475_0": "156.",
  "anya-e0703n36:476_0": "Aṇāpesi samīpaṭṭhaṁ, purisaṁ “gaccha kuṭṭhino;",
  "anya-e0703n36:477_0": "Amukassā’bhijānāhi, cittācāra”nti so tato.",
  "anya-e0703n36:478_0": "157.",
  "anya-e0703n36:479_0": "Sahāyo viya kuṭṭhissa, samīpamhi nisīdiya;",
  "anya-e0703n36:480_0": "“Ruṭṭho kimatthaṁ bho tva”nti, pucchi sabbamavoca so.",
  "anya-e0703n36:481_0": "158.",
  "anya-e0703n36:482_0": "“Dāso me buddhadāso’yaṁ, rājāhu puññakammunā;",
  "anya-e0703n36:483_0": "Avamaññāya maṁ mayhaṁ, parato to yāti hatthinā.",
  "anya-e0703n36:484_0": "159.",
  "anya-e0703n36:485_0": "Jānāpessāmi attānaṁ, katipāhena soyadi;",
  "anya-e0703n36:486_0": "Hatthaṁ me eti kāretvā, sabbaṁ dāsāna niggahaṁ.",
  "anya-e0703n36:487_0": "160.",
  "anya-e0703n36:488_0": "No ce hatthaṁ mamā’yāti, māretvā galalohitaṁ;",
  "anya-e0703n36:489_0": "Pivissāmi na sandeho, na cireneva passasi”.",
  "anya-e0703n36:490_0": "161.",
  "anya-e0703n36:491_0": "So gantvā narapālassa, pavattiṁ taṁ nivedayi;",
  "anya-e0703n36:492_0": "“Pubbaveri mamāyanti, nicchinitvā mahāmati.",
  "anya-e0703n36:493_0": "162.",
  "anya-e0703n36:494_0": "Vino detumupāyena, puttaṁveranti verino;",
  "anya-e0703n36:495_0": "“Sādhu saṅgaṇutaṁ tva”nti, purisaṁ taṁ niyejayi.",
  "anya-e0703n36:496_0": "163.",
  "anya-e0703n36:497_0": "So kuṭṭhimupasaṅkamma, sahāyo piya āhataṁ;",
  "anya-e0703n36:498_0": "“Rājānaṁ taṁ vināsetuṁ, cetetvā kālamettakaṁ.",
  "anya-e0703n36:499_0": "164.",
  "anya-e0703n36:500_0": "Alabhanto sahāyaṁ me, nāsakkhi tassa ghātane;",
  "anya-e0703n36:501_0": "Laddhātumhe nayissāmi, matthakaṁ me manorathaṁ.",
  "anya-e0703n36:502_0": "165.",
  "anya-e0703n36:503_0": "Etha gehe vasitvā me, hotha me anuvattakā;",
  "anya-e0703n36:504_0": "Ahameva’ssa nāsemi, katipāhena jīvitaṁ.",
  "anya-e0703n36:505_0": "166.",
  "anya-e0703n36:506_0": "Iti vatvāna taṁ kuṭṭhaṁ, netvā so gharamattano;",
  "anya-e0703n36:507_0": "Sunhāta suvilittañca, nivatthasukhumambaraṁ.",
  "anya-e0703n36:508_0": "167.",
  "anya-e0703n36:509_0": "Subhuttamadhurāhāraṁ, yobbanitthikathādaraṁ;",
  "anya-e0703n36:510_0": "Sayāpesi manuññamhi, sayane sādhu santhate.",
  "anya-e0703n36:511_0": "168.",
  "anya-e0703n36:512_0": "Ete neva niyāmena, katipāhaṁ nīvāsiya;",
  "anya-e0703n36:513_0": "Ñatvā taṁ jātavissāsaṁ, sukhitaṁ piṇitindriyaṁ.",
  "anya-e0703n36:514_0": "169.",
  "anya-e0703n36:515_0": "“Rañño dinna”nti vatvāna, khajjabhojjādikaṁ adā;",
  "anya-e0703n36:516_0": "Dvattikkhattuṁ nisedhetvā, tena’jjhiṭṭho namaggahi.",
  "anya-e0703n36:517_0": "170.",
  "anya-e0703n36:518_0": "Bhūpālena kamenā’si, vissattho’tiva bhūmipo;",
  "anya-e0703n36:519_0": "Matoti sutvā tassā-si hadayaṁ phalitaṁ dvidhā.",
  "anya-e0703n36:520_0": "171.",
  "anya-e0703n36:521_0": "Evaṁ roge tikicchesi, rājā sārīramānase;",
  "anya-e0703n36:522_0": "Ṭhapesi vejje dīpassa, tikacchattha manāgate.",
  "anya-e0703n36:523_0": "172.",
  "anya-e0703n36:524_0": "Pañcavīsatihatthena, pāsāde nopasobhitaṁ;",
  "anya-e0703n36:525_0": "Mahāvihāremoravha-pariveṇamakārayi.",
  "anya-e0703n36:526_0": "173.",
  "anya-e0703n36:527_0": "Samaṇaṁ goḷapānuñca, adā gāmadvayaṁ tahiṁ;",
  "anya-e0703n36:528_0": "Dhammaghāsaka bhikkhūnaṁ, bhoge kappiyakārake.",
  "anya-e0703n36:529_0": "174.",
  "anya-e0703n36:530_0": "Vihāre pariveṇe ca, sampanna catupaccaye;",
  "anya-e0703n36:531_0": "Vāpiyo dānasālāyo, paṭimāyoca kārayi.",
  "anya-e0703n36:532_0": "175.",
  "anya-e0703n36:533_0": "Tasseva rañño rajjamhi, mahādhammakathīyati;",
  "anya-e0703n36:534_0": "Suttāni parivattesi, sīhaḷāyaniruttiyā.",
  "anya-e0703n36:535_0": "176.",
  "anya-e0703n36:536_0": "Abhīti puttā tassā’suṁ, sūrāviraṅgarūpino;",
  "anya-e0703n36:537_0": "Asītiyā sāvakānaṁ, nāmakāyipadassanā.",
  "anya-e0703n36:538_0": "177.",
  "anya-e0703n36:539_0": "Sāriputtādināmehi, puttehi parivārito;",
  "anya-e0703n36:540_0": "Buddhadāso sasambuddha-rājāviya virocatha.",
  "anya-e0703n36:541_0": "178.",
  "anya-e0703n36:542_0": "Evaṁ katvā hitaṁdīpa-vīsīnaṁ tidivaṁ gato;",
  "anya-e0703n36:543_0": "Vasse ekūnatiṁsamhi, buddhadāso narādhipo.",
  "anya-e0703n36:544_0": "179.",
  "anya-e0703n36:545_0": "Tato jeṭṭhasuto tassa, upatisso’si bhūpati;",
  "anya-e0703n36:546_0": "Sabbarājaguṇopeso, niccasīlo mahādayo.",
  "anya-e0703n36:547_0": "180.",
  "anya-e0703n36:548_0": "Dasāpuññakriyāhitvā, dasapuññakriyā’dīyi;",
  "anya-e0703n36:549_0": "Rājadhammeca pūresi, rājapāramitā dasa.",
  "anya-e0703n36:550_0": "181.",
  "anya-e0703n36:551_0": "Gaṇhi saṅgahavatthūhi, cathūhi ca catuddisaṁ;",
  "anya-e0703n36:552_0": "Mahāpāḷimhi dāpesi, rājārājānubhojanaṁ.",
  "anya-e0703n36:553_0": "182.",
  "anya-e0703n36:554_0": "Uttaramhi disābhāge, cetiyamhā tu maṅgalā;",
  "anya-e0703n36:555_0": "Thūpañca paṭimāgehaṁ, paṭimañcā’pi kārayi.",
  "anya-e0703n36:556_0": "184.",
  "anya-e0703n36:557_0": "Karonto tañca so rājā, mākhijjantu janā iti;",
  "anya-e0703n36:558_0": "Kārāpesi kumārehi, dāpetvā guḷakaṇḍulaṁ.",
  "anya-e0703n36:559_0": "185.",
  "anya-e0703n36:560_0": "Rājuppalavhayaṁ gijjha-kūṭaṁ pokkharapāsayaṁ;",
  "anya-e0703n36:561_0": "Vālāhassañca ambuṭṭhiṁ, goṇḍigomamhi vāpikaṁ.",
  "anya-e0703n36:562_0": "186.",
  "anya-e0703n36:563_0": "Vihāraṁ khaṇḍarājiñca, vāpiyo ca thirodikā;",
  "anya-e0703n36:564_0": "Appamāṇāni puññāni, kārāpesi tahiṁ tahiṁ.",
  "anya-e0703n36:565_0": "187.",
  "anya-e0703n36:566_0": "Vassāmānepi so vasse, sayane sannisinnako;",
  "anya-e0703n36:567_0": "Kevalaṁ pariṇāmesi, rattiṁ “khedo janassī”ti.",
  "anya-e0703n36:568_0": "188.",
  "anya-e0703n36:569_0": "Ñatvā amacco taṁ netvā, uyyānaṁ jādayīgharaṁ;",
  "anya-e0703n36:570_0": "Evaṁ paṭicca attānaṁ, dukkhaṁ nākāsi pāṇinaṁ.",
  "anya-e0703n36:571_0": "189.",
  "anya-e0703n36:572_0": "Kāle tassā’sī dukkhitta-rogadukkhehi pīḷito;",
  "anya-e0703n36:573_0": "Dīpo dīpo pamopāpa-tamaso so sumānaso.",
  "anya-e0703n36:574_0": "190.",
  "anya-e0703n36:575_0": "Bhikkhū pucchittha”kiṁbhante, dubbhikkhādibhayaddite;",
  "anya-e0703n36:576_0": "Loke lokahitaṁ natthi, kataṁ kiñci mahesīnā.",
  "anya-e0703n36:577_0": "191.",
  "anya-e0703n36:578_0": "Gahghārohaṇasuttassa, uppattiṁtassa niddisuṁ;",
  "anya-e0703n36:579_0": "Sutvā taṁ sabbasovaṇṇaṁ, bimbaṁ sambuddhadhātuno.",
  "anya-e0703n36:580_0": "192.",
  "anya-e0703n36:581_0": "Katvā satthusilāpattaṁ, sodakaṁ pāṇisampuṭe;",
  "anya-e0703n36:582_0": "Ṭhapetvā tassa te rūpa-māropetvā mahārathaṁ.",
  "anya-e0703n36:583_0": "193.",
  "anya-e0703n36:584_0": "Sayaṁ sīlaṁ samādāya, samādetvā mahājanaṁ;",
  "anya-e0703n36:585_0": "Mahādānaṁ pavattetvā, abhayaṁ tambapāṇinaṁ.",
  "anya-e0703n36:586_0": "194.",
  "anya-e0703n36:587_0": "Alaṅkatvā ca nagaraṁ, devalokamanoharaṁ;",
  "anya-e0703n36:588_0": "Dīpavāsīhi sabbehi, bhikkhūhi parivārito.",
  "anya-e0703n36:589_0": "195.",
  "anya-e0703n36:590_0": "Otarittha mahāvīthiṁ, bhikkhū tattha samāgatā;",
  "anya-e0703n36:591_0": "Bhaṇantā ratanaṁ suttaṁ, siñcamānā jalaṁ tathā.",
  "anya-e0703n36:592_0": "196.",
  "anya-e0703n36:593_0": "Rājagehantike vīti-magge pākārasantike;",
  "anya-e0703n36:594_0": "Vicariṁsu tiyāmante, kurumānā padakkhiṇaṁ.",
  "anya-e0703n36:595_0": "197.",
  "anya-e0703n36:596_0": "Bhijjamāne’ruṇe vassi, mahāmegho mahītale;",
  "anya-e0703n36:597_0": "Rogāturāca sabbepi, sukhitākaṁsu ussavaṁ.",
  "anya-e0703n36:598_0": "198.",
  "anya-e0703n36:599_0": "“Yadā dubbhikkharogādi-bhayaṁ dīpamhi hessati;",
  "anya-e0703n36:600_0": "Evameva karontū”ti, niyojesi narādhipo.",
  "anya-e0703n36:601_0": "199.",
  "anya-e0703n36:602_0": "Āruḷho cetiyaṁ kunta-kipillādimavekkhiya;",
  "anya-e0703n36:603_0": "Pucchitvā morapiñcena, “saṇikaṁ yantuvanaṁti ca.",
  "anya-e0703n36:604_0": "200.",
  "anya-e0703n36:605_0": "Saṅkhaṁ sodakamādāya, caratā’sanadhovane;",
  "anya-e0703n36:606_0": "Dakkhiṇaparitoṇamhi, kāretvā rājagehato.",
  "anya-e0703n36:607_0": "201.",
  "anya-e0703n36:608_0": "Uposathagharaṁ buddha-paṭimāgeha meva ca;",
  "anya-e0703n36:609_0": "Pākārena parikkhittaṁ, uyyānañca manoramaṁ.",
  "anya-e0703n36:610_0": "202.",
  "anya-e0703n36:611_0": "Cātuddasiṁpañcadasiṁ, yā ca pakkhassa aṭṭhamī;",
  "anya-e0703n36:612_0": "Pāṭihāriyapakkhañca, aṭṭhaṅgasamupāgataṁ.",
  "anya-e0703n36:613_0": "203.",
  "anya-e0703n36:614_0": "Uposathaṁsamādāya, sāpadānaṁ tahaṁ vasī;",
  "anya-e0703n36:615_0": "Yāvajīvañca so bhuñji, mahāpāḷimhi bhojanaṁ.",
  "anya-e0703n36:616_0": "204.",
  "anya-e0703n36:617_0": "Carantocakalandāna muyyāne bhattamattano;",
  "anya-e0703n36:618_0": "Katvā nivāpaṁ dāpesi, tadajjāpi ca vattati.",
  "anya-e0703n36:619_0": "205.",
  "anya-e0703n36:620_0": "Coraṁ vajjamupanītaṁ, disvā saṁviggamānaso;",
  "anya-e0703n36:621_0": "Chavaṁ susānaṁ ānetvā, khipitvā lohakumbhiyaṁ.",
  "anya-e0703n36:622_0": "206.",
  "anya-e0703n36:623_0": "Datvā dhamaṁ palāpetvā, coraṁ rattiyamuggate;",
  "anya-e0703n36:624_0": "Sūriye kujjhito coraṁ-viyajhāpayi taṁ chavaṁ.",
  "anya-e0703n36:625_0": "207.",
  "anya-e0703n36:626_0": "Akā dīpamhi sabbesaṁ, cetiyānaṁ mahāmahaṁ;",
  "anya-e0703n36:627_0": "Thūpārāme ca thūpassa, hemacumbaṭakañcukaṁ.",
  "anya-e0703n36:628_0": "208.",
  "anya-e0703n36:629_0": "Dvācattālīsavassāni, katvā vañcuṁkhaṇampiso;",
  "anya-e0703n36:630_0": "Katvā puññamupāgañchi, devarājasahabyataṁ.",
  "anya-e0703n36:631_0": "209.",
  "anya-e0703n36:632_0": "Rañño tassa kaniṭṭhena, mahānāmena vallabhā;",
  "anya-e0703n36:633_0": "Devī satthaṁ nipātetvā, tamaṭhānamhi mārayi.",
  "anya-e0703n36:634_0": "210.",
  "anya-e0703n36:635_0": "Pabbajitkā kaniṭṭho so, jīvamānamhi bhātari;",
  "anya-e0703n36:636_0": "Hate rājini bhītāya, āvattitvā’si bhūpati.",
  "anya-e0703n36:637_0": "211.",
  "anya-e0703n36:638_0": "Mahesiṁattano’kāsi, mahesiṁ bhātughātiniṁ;",
  "anya-e0703n36:639_0": "Gilānasālā kāresi, mahāpāḷiñca vaḍḍhayi.",
  "anya-e0703n36:640_0": "212.",
  "anya-e0703n36:641_0": "Lohadvāra ralaggāma-koṭipassavanavhaye;",
  "anya-e0703n36:642_0": "Tayo vihāre katvā’dā, bhikkhūnamabhayuttare.",
  "anya-e0703n36:643_0": "213.",
  "anya-e0703n36:644_0": "Vihāraṁ kārayitvāna, dhumarakkhamhi pabbate;",
  "anya-e0703n36:645_0": "Mahesiyā nayenā’dā, bhikkhūnaṁ theravādīnaṁ.",
  "anya-e0703n36:646_0": "214.",
  "anya-e0703n36:647_0": "Navakammañca jiṇṇesu, vihāresu sakārayi;",
  "anya-e0703n36:648_0": "Dānasīlarato vatthu-pūjako ca ahu sadā.",
  "anya-e0703n36:649_0": "215.",
  "anya-e0703n36:650_0": "Bodhimaṇḍasamīpamhi, jāto brohmaṇamāṇavo;",
  "anya-e0703n36:651_0": "Vijjāsippakalāvedī, tīsu vedesu pārago.",
  "anya-e0703n36:652_0": "216.",
  "anya-e0703n36:653_0": "Sammāviññātasamayo, sabbavādavisārado;",
  "anya-e0703n36:654_0": "Vādatthi jambudīpamhi, āhiṇḍanto pavādiko.",
  "anya-e0703n36:655_0": "217.",
  "anya-e0703n36:656_0": "Vihāramekaṁ āgamma, rattiṁ pātañjalaṁ mataṁ;",
  "anya-e0703n36:657_0": "Parivattesi sampuṇṇa-padaṁ suparimaṇḍalaṁ.",
  "anya-e0703n36:658_0": "218.",
  "anya-e0703n36:659_0": "Tattheko revatonāma, mahāthero vijāniya;",
  "anya-e0703n36:660_0": "“Mahāpañño ayaṁ sattho, dametuṁ vaṭṭatī”ti so.",
  "anya-e0703n36:661_0": "219.",
  "anya-e0703n36:662_0": "“Ko nu gadrabharāvena, viravanto”ti abravi;",
  "anya-e0703n36:663_0": "“Gadrabhānaṁ rave atthaṁ, kiṁ jānāsī”ti āhataṁ.",
  "anya-e0703n36:664_0": "220.",
  "anya-e0703n36:665_0": "“Ahaṁ jāne”ti vuttoso, otāresi sakaṁ mataṁ;",
  "anya-e0703n36:666_0": "Vuttaṁ vuttaṁ viyākāsi, virodhampi ca dassayi.",
  "anya-e0703n36:667_0": "221.",
  "anya-e0703n36:668_0": "“Tenahi tvaṁ sakavāda-motārehī”ti codito;",
  "anya-e0703n36:669_0": "Pāḷimāhā’bhidhammassa, atthamassa na so’migā.",
  "anya-e0703n36:670_0": "222.",
  "anya-e0703n36:671_0": "Āha kasse’samanto’ti, buddhamanto’ti sobravi;",
  "anya-e0703n36:672_0": "“Dehi me ta”nti vuttehi, “gaṇhu pabbajjataṁ”iti.",
  "anya-e0703n36:673_0": "223.",
  "anya-e0703n36:674_0": "Mantatthī pabbajitvāso, uggaṇhi piṭakattayaṁ;",
  "anya-e0703n36:675_0": "“Ekāyano ayaṁ maggo”, iti pacchā tamaggahi.",
  "anya-e0703n36:676_0": "224.",
  "anya-e0703n36:677_0": "Buddhassa viya gambhīra-ghosattātaṁ viyākaruṁ;",
  "anya-e0703n36:678_0": "“Buddhaghoso”ti ghosohi, buddho viya mahītale.",
  "anya-e0703n36:679_0": "225.",
  "anya-e0703n36:680_0": "Tattha ñāṇodayaṁ nāma, katvā makaraṇaṁ tadā;",
  "anya-e0703n36:681_0": "Dhammasaṅgaṇīyā’kāsi, kacchaṁ so aṭṭhasāliniṁ.",
  "anya-e0703n36:682_0": "226.",
  "anya-e0703n36:683_0": "Patittaṭṭhakathañceva, kārāmārabhibuddhimā;",
  "anya-e0703n36:684_0": "Taṁ disvā revato thero, idaṁ vacanamabruvi.",
  "anya-e0703n36:685_0": "227.",
  "anya-e0703n36:686_0": "Pāḷimattaidhānitaṁ, natthi aṭṭhakathā idha;",
  "anya-e0703n36:687_0": "Tathācariyavādā ca, bhinnarūpā na vijjare.",
  "anya-e0703n36:688_0": "228.",
  "anya-e0703n36:689_0": "Sīhaḷāṭṭhakathā suddhā, mahindena matīmatā;",
  "anya-e0703n36:690_0": "Saṁgītittayamāruḷaṁ, sammāsambuddhadesitaṁ.",
  "anya-e0703n36:691_0": "229.",
  "anya-e0703n36:692_0": "Sāriputtādigītañca, kathāmaggaṁ samekkhiya;",
  "anya-e0703n36:693_0": "Ekā sīhaḷabhāsāya, sīhaḷesu pavattati.",
  "anya-e0703n36:694_0": "230.",
  "anya-e0703n36:695_0": "Taṁ tattha gantvā sutvā taṁ, māgadhānaṁ niruttiyā;",
  "anya-e0703n36:696_0": "Parivattesi sā hoti, sabbalokahitā vahā.",
  "anya-e0703n36:697_0": "231.",
  "anya-e0703n36:698_0": "Evaṁ vutto pasanno so, nikkhamitvā tatoimaṁ;",
  "anya-e0703n36:699_0": "Dīpamāgā imasseva, raññokāle mahāmati.",
  "anya-e0703n36:700_0": "232.",
  "anya-e0703n36:701_0": "Mahāvihāraṁ sampatto, vihāraṁ sabbasādhūnaṁ;",
  "anya-e0703n36:702_0": "Mahāpadhānagharaṁ gantvā, saṅghapālassa santikā.",
  "anya-e0703n36:703_0": "233.",
  "anya-e0703n36:704_0": "Sīhaḷaṭṭhakathā suddhā, theravādañca sabbaso;",
  "anya-e0703n36:705_0": "“Dhammasāmissa esova, adhippāyo”ti nicchiya.",
  "anya-e0703n36:706_0": "234.",
  "anya-e0703n36:707_0": "Tattha saṅghaṁ samānetvā, “kātumaṭṭhakathāmama;",
  "anya-e0703n36:708_0": "Potthake detha sabbe”ti, āha vīmaṁsituṁ sataṁ.",
  "anya-e0703n36:709_0": "235.",
  "anya-e0703n36:710_0": "Saṅgho gāthādvayaṁ tassā-dāsi “sāmattiyaṁ tava;",
  "anya-e0703n36:711_0": "Ettha dassehi taṁ disvā, sabbe demā”ti potthake.",
  "anya-e0703n36:712_0": "236.",
  "anya-e0703n36:713_0": "Piṭakattayamettheva, saddhimaṭṭhakathāya so;",
  "anya-e0703n36:714_0": "Visuddhimagga nāmākā, saṅgahetvā samāsato.",
  "anya-e0703n36:715_0": "237.",
  "anya-e0703n36:716_0": "Tato saṅghaṁ samuhetvā, sambuddhamatakovidaṁ;",
  "anya-e0703n36:717_0": "Mahābodhisamīpamhi, so taṁ vācetumārabhi.",
  "anya-e0703n36:718_0": "238.",
  "anya-e0703n36:719_0": "Devatā tassa nepuññaṁ, pakāsetuṁ mahājane;",
  "anya-e0703n36:720_0": "Chādesuṁ potthakaṁso’yi, dvattikkhattumpi taṁ akā.",
  "anya-e0703n36:721_0": "239.",
  "anya-e0703n36:722_0": "Vācetuṁ tatiye vāre, potthake samudāhaṭe;",
  "anya-e0703n36:723_0": "Potthakadvayamaññampi, saṇṭhāpesuṁ tahiṁ marū.",
  "anya-e0703n36:724_0": "240.",
  "anya-e0703n36:725_0": "Vācayiṁsu tadābhikkhū, potthakattaya mekato;",
  "anya-e0703n36:726_0": "Ganthato atthato cāpi, pubbāparavasena vā.",
  "anya-e0703n36:727_0": "241.",
  "anya-e0703n36:728_0": "Theravādehi pāḷihi, padehi byañjanehi ca;",
  "anya-e0703n36:729_0": "Aññatthattamahūneva, potthatthakesupi tīsupi.",
  "anya-e0703n36:730_0": "242.",
  "anya-e0703n36:731_0": "Atha ugghosayi saṅgho, tuṭṭhahaṭṭho tisesato;",
  "anya-e0703n36:732_0": "“Nissaṁsayā’yaṁ metteyyo”, iti vatvā punappunaṁ.",
  "anya-e0703n36:733_0": "243.",
  "anya-e0703n36:734_0": "Saddhimaṭṭhakathāyā’dā, potthake piṭakattaye;",
  "anya-e0703n36:735_0": "Ganthakāre vasanto so, vihāre durasaṅkare.",
  "anya-e0703n36:736_0": "244.",
  "anya-e0703n36:737_0": "Parivattesi sabbāpi, sīhaḷaṭṭhakathā tadā;",
  "anya-e0703n36:738_0": "Sabbesaṁ mūlabhāsāya, māgadhāya niruttiyā.",
  "anya-e0703n36:739_0": "245.",
  "anya-e0703n36:740_0": "“Sattānaṁ sabbabhāsānaṁ, sā ahosi hitāvahā;",
  "anya-e0703n36:741_0": "Theriyā cariyāsabbe, pāḷiṁviya tamaggayhaṁ.",
  "anya-e0703n36:742_0": "246.",
  "anya-e0703n36:743_0": "Atha kattabbakiccesu, gahetu pariniṭṭhitiṁ;",
  "anya-e0703n36:744_0": "Vandituṁ so mahābodhiṁ, jambudīpamupāgami.",
  "anya-e0703n36:745_0": "247.",
  "anya-e0703n36:746_0": "Sutvā dvāvīsavassāni, mahānāmo mahāmahiṁ;",
  "anya-e0703n36:747_0": "Katvā puññāni citrāni, yathā kammamugāgami.",
  "anya-e0703n36:748_0": "248.",
  "anya-e0703n36:749_0": "Sabbe’pe te dharaṇīpatayo maccumaccetumante,",
  "anya-e0703n36:750_0": "No sakkhiṁ sūpacitasukhabalāsādhu sampannabhogo;",
  "anya-e0703n36:751_0": "Evaṁ sabbe nidhanavasagā honti sattā’ti niccaṁ,",
  "anya-e0703n36:752_0": "Rāgaṁ sammā vinayatudhane jīvite cāpi dhīmā.",
  "anya-e0703n36:753_0": "Sujanappasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n36:754_0": "Pañcarājako nāma",
  "anya-e0703n36:755_0": "Sattatiṁsatimo paricchedo."
}