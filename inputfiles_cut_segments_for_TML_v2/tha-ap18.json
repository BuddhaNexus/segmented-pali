{
  "tha-ap18:0.1_0": "Therāpadāna",
  "tha-ap18:0.2_0": "Sīhāsaniyavagga",
  "tha-ap18:0.3_0": "6. Rāhulattheraapadāna",
  "tha-ap18:1.1_0": "“Padumuttarassa bhagavato,",
  "tha-ap18:1.2_0": "Lokajeṭṭhassa tādino;",
  "tha-ap18:1.3_0": "Sattabhūmamhi pāsāde,",
  "tha-ap18:1.4_0": "Ādāsaṁ santhariṁ ahaṁ.",
  "tha-ap18:2.1_0": "Khīṇāsavasahassehi,",
  "tha-ap18:2.2_0": "parikiṇṇo mahāmuni;",
  "tha-ap18:2.3_0": "Upāgami gandhakuṭiṁ,",
  "tha-ap18:2.4_0": "dvipadindo narāsabho.",
  "tha-ap18:3.1_0": "Virocento gandhakuṭiṁ,",
  "tha-ap18:3.2_0": "devadevo narāsabho;",
  "tha-ap18:3.3_0": "Bhikkhusaṅghe ṭhito satthā,",
  "tha-ap18:3.4_0": "imā gāthā abhāsatha.",
  "tha-ap18:4.1_0": "‘Yenāyaṁ jotitā seyyā,",
  "tha-ap18:4.2_0": "ādāsova susanthato;",
  "tha-ap18:4.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap18:4.4_0": "suṇātha mama bhāsato.",
  "tha-ap18:5.1_0": "Soṇṇamayā rūpimayā,",
  "tha-ap18:5.2_0": "atho veḷuriyāmayā;",
  "tha-ap18:5.3_0": "Nibbattissanti pāsādā,",
  "tha-ap18:5.4_0": "ye keci manaso piyā.",
  "tha-ap18:6.1_0": "Catusaṭṭhikkhattuṁ devindo,",
  "tha-ap18:6.2_0": "devarajjaṁ karissati;",
  "tha-ap18:6.3_0": "Sahassakkhattuṁ cakkavattī,",
  "tha-ap18:6.4_0": "bhavissati anantarā.",
  "tha-ap18:7.1_0": "Ekavīsatikappamhi,",
  "tha-ap18:7.2_0": "vimalo nāma khattiyo;",
  "tha-ap18:7.3_0": "Cāturanto vijitāvī,",
  "tha-ap18:7.4_0": "cakkavattī bhavissati.",
  "tha-ap18:8.1_0": "Nagaraṁ reṇuvatī nāma,",
  "tha-ap18:8.2_0": "iṭṭhakāhi sumāpitaṁ;",
  "tha-ap18:8.3_0": "Āyāmato tīṇi sataṁ,",
  "tha-ap18:8.4_0": "caturassasamāyutaṁ.",
  "tha-ap18:9.1_0": "Sudassano nāma pāsādo,",
  "tha-ap18:9.2_0": "vissakammena māpito;",
  "tha-ap18:9.3_0": "Kūṭāgāravarūpeto,",
  "tha-ap18:9.4_0": "sattaratanabhūsito.",
  "tha-ap18:10.1_0": "Dasasaddāvivittaṁ taṁ,",
  "tha-ap18:10.2_0": "vijjādharasamākulaṁ;",
  "tha-ap18:10.3_0": "Sudassanaṁva nagaraṁ,",
  "tha-ap18:10.4_0": "devatānaṁ bhavissati.",
  "tha-ap18:11.1_0": "Pabhā niggacchate tassa,",
  "tha-ap18:11.2_0": "uggacchanteva sūriye;",
  "tha-ap18:11.3_0": "Virocessati taṁ niccaṁ,",
  "tha-ap18:11.4_0": "samantā aṭṭhayojanaṁ.",
  "tha-ap18:12.1_0": "Kappasatasahassamhi,",
  "tha-ap18:12.2_0": "okkākakulasambhavo;",
  "tha-ap18:12.3_0": "Gotamo nāma gottena,",
  "tha-ap18:12.4_0": "satthā loke bhavissati.",
  "tha-ap18:13.1_0": "Tusitā so cavitvāna,",
  "tha-ap18:13.2_0": "sukkamūlena codito;",
  "tha-ap18:13.3_0": "Gotamassa bhagavato,",
  "tha-ap18:13.4_0": "atrajo so bhavissati.",
  "tha-ap18:14.1_0": "Sacevaseyya agāraṁ,",
  "tha-ap18:14.2_0": "cakkavattī bhaveyya so;",
  "tha-ap18:14.3_0": "Aṭṭhānametaṁ yaṁ tādī,",
  "tha-ap18:14.4_0": "agāre ratimajjhagā.",
  "tha-ap18:15.1_0": "Nikkhamitvā agāramhā,",
  "tha-ap18:15.2_0": "pabbajissati subbato;",
  "tha-ap18:15.3_0": "Rāhulo nāma nāmena,",
  "tha-ap18:15.4_0": "arahā so bhavissati’.",
  "tha-ap18:16.1_0": "Kikīva aṇḍaṁ rakkheyya,",
  "tha-ap18:16.2_0": "cāmarī viya vāladhiṁ;",
  "tha-ap18:16.3_0": "Nipako sīlasampanno,",
  "tha-ap18:16.4_0": "evaṁ rakkhiṁ mahāmuni.",
  "tha-ap18:17.1_0": "Tassāhaṁ dhammamaññāya,",
  "tha-ap18:17.2_0": "vihāsiṁ sāsane rato;",
  "tha-ap18:17.3_0": "Sabbāsave pariññāya,",
  "tha-ap18:17.4_0": "viharāmi anāsavo.",
  "tha-ap18:18.1_0": "Paṭisambhidā catasso,",
  "tha-ap18:18.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap18:18.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap18:18.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap18:19.1_0": "Itthaṁ sudaṁ āyasmā rāhulo thero imā gāthāyo abhāsitthāti.",
  "tha-ap18:20.1_0": "Rāhulattherassāpadānaṁ chaṭṭhaṁ."
}