{
  "thag10.1:0.1_0": "Theragāthā",
  "thag10.1:0.2_0": "Dasakanipāta",
  "thag10.1:0.3_0": "Paṭhamavagga",
  "thag10.1:0.4_0": "10.1. Kāḷudāyittheragāthā",
  "thag10.1:1.1_0": "“Aṅgārino dāni dumā bhadante,",
  "thag10.1:1.2_0": "Phalesino chadanaṁ vippahāya;",
  "thag10.1:1.3_0": "Te accimantova pabhāsayanti,",
  "thag10.1:1.4_0": "Samayo mahāvīra bhāgī rasānaṁ.",
  "thag10.1:2.1_0": "Dumāni phullāni manoramāni,",
  "thag10.1:2.2_0": "Samantato sabbadisā pavanti;",
  "thag10.1:2.3_0": "Pattaṁ pahāya phalamāsasānā,",
  "thag10.1:2.4_0": "Kālo ito pakkamanāya vīra.",
  "thag10.1:3.1_0": "Nevātisītaṁ na panātiuṇhaṁ,",
  "thag10.1:3.2_0": "Sukhā utu addhaniyā bhadante;",
  "thag10.1:3.3_0": "Passantu taṁ sākiyā koḷiyā ca,",
  "thag10.1:3.4_0": "Pacchāmukhaṁ rohiniyaṁ tarantaṁ.",
  "thag10.1:4.1_0": "Āsāya kasate khettaṁ,",
  "thag10.1:4.2_0": "bījaṁ āsāya vappati;",
  "thag10.1:4.3_0": "Āsāya vāṇijā yanti,",
  "thag10.1:4.4_0": "samuddaṁ dhanahārakā;",
  "thag10.1:4.5_0": "Yāya āsāya tiṭṭhāmi,",
  "thag10.1:4.6_0": "sā me āsā samijjhatu.",
  "thag10.1:5.1_0": "Punappunaṁ ceva vapanti bījaṁ,",
  "thag10.1:5.2_0": "Punappunaṁ vassati devarājā;",
  "thag10.1:5.3_0": "Punappunaṁ khettaṁ kasanti kassakā,",
  "thag10.1:5.4_0": "Punappunaṁ dhaññamupeti raṭṭhaṁ.",
  "thag10.1:6.1_0": "Punappunaṁ yācanakā caranti,",
  "thag10.1:6.2_0": "Punappunaṁ dānapatī dadanti;",
  "thag10.1:6.3_0": "Punappunaṁ dānapatī daditvā,",
  "thag10.1:6.4_0": "Punappunaṁ saggamupenti ṭhānaṁ.",
  "thag10.1:7.1_0": "Vīro have sattayugaṁ puneti,",
  "thag10.1:7.2_0": "Yasmiṁ kule jāyati bhūripañño;",
  "thag10.1:7.3_0": "Maññāmahaṁ sakkati devadevo,",
  "thag10.1:7.4_0": "Tayā hi jāto muni saccanāmo.",
  "thag10.1:8.1_0": "Suddhodano nāma pitā mahesino,",
  "thag10.1:8.2_0": "Buddhassa mātā pana māyanāmā;",
  "thag10.1:8.3_0": "Yā bodhisattaṁ parihariya kucchinā,",
  "thag10.1:8.4_0": "Kāyassa bhedā tidivamhi modati.",
  "thag10.1:9.1_0": "Sā gotamī kālakatā ito cutā,",
  "thag10.1:9.2_0": "Dibbehi kāmehi samaṅgibhūtā;",
  "thag10.1:9.3_0": "Sā modati kāmaguṇehi pañcahi,",
  "thag10.1:9.4_0": "Parivāritā devagaṇehi tehi”.",
  "thag10.1:10.1_0": "“Buddhassa puttomhi asayhasāhino,",
  "thag10.1:10.2_0": "Aṅgīrasassappaṭimassa tādino;",
  "thag10.1:10.3_0": "Pitupitā mayhaṁ tuvaṁsi sakka,",
  "thag10.1:10.4_0": "Dhammena me gotama ayyakosī”ti.",
  "thag10.1:10.5_0": "… Kāḷudāyī thero …."
}