{
  "tha-ap404:0.1_0": "Therāpadāna",
  "tha-ap404:0.2_0": "Metteyyavagga",
  "tha-ap404:0.3_0": "2. Puṇṇakattheraapadāna",
  "tha-ap404:1.1_0": "“Pabbhārakūṭaṁ nissāya,",
  "tha-ap404:1.2_0": "sayambhū aparājito;",
  "tha-ap404:1.3_0": "Ābādhiko ca so buddho,",
  "tha-ap404:1.4_0": "vasati pabbatantare.",
  "tha-ap404:2.1_0": "Mama assamasāmantā,",
  "tha-ap404:2.2_0": "panādo āsi tāvade;",
  "tha-ap404:2.3_0": "Buddhe nibbāyamānamhi,",
  "tha-ap404:2.4_0": "āloko udapajjatha.",
  "tha-ap404:3.1_0": "Yāvatā vanasaṇḍasmiṁ,",
  "tha-ap404:3.2_0": "acchakokataracchakā;",
  "tha-ap404:3.3_0": "Vāḷā ca kesarī sabbe,",
  "tha-ap404:3.4_0": "abhigajjiṁsu tāvade.",
  "tha-ap404:4.1_0": "Uppātaṁ tamahaṁ disvā,",
  "tha-ap404:4.2_0": "pabbhāraṁ agamāsahaṁ;",
  "tha-ap404:4.3_0": "Tatthaddassāsiṁ sambuddhaṁ,",
  "tha-ap404:4.4_0": "nibbutaṁ aparājitaṁ.",
  "tha-ap404:5.1_0": "Suphullaṁ sālarājaṁva,",
  "tha-ap404:5.2_0": "sataraṁsiṁva uggataṁ;",
  "tha-ap404:5.3_0": "Vītaccikaṁva aṅgāraṁ,",
  "tha-ap404:5.4_0": "nibbutaṁ aparājitaṁ.",
  "tha-ap404:6.1_0": "Tiṇaṁ kaṭṭhañca pūretvā,",
  "tha-ap404:6.2_0": "citakaṁ tatthakāsahaṁ;",
  "tha-ap404:6.3_0": "Citakaṁ sukataṁ katvā,",
  "tha-ap404:6.4_0": "sarīraṁ jhāpayiṁ ahaṁ.",
  "tha-ap404:7.1_0": "Sarīraṁ jhāpayitvāna,",
  "tha-ap404:7.2_0": "gandhatoyaṁ samokiriṁ;",
  "tha-ap404:7.3_0": "Antalikkhe ṭhito yakkho,",
  "tha-ap404:7.4_0": "nāmamaggahi tāvade.",
  "tha-ap404:8.1_0": "‘Yaṁ pūritaṁ tayā kiccaṁ,",
  "tha-ap404:8.2_0": "sayambhussa mahesino;",
  "tha-ap404:8.3_0": "Puṇṇako nāma nāmena,",
  "tha-ap404:8.4_0": "sadā hohi tuvaṁ mune’.",
  "tha-ap404:9.1_0": "Tamhā kāyā cavitvāna,",
  "tha-ap404:9.2_0": "devalokaṁ agacchahaṁ;",
  "tha-ap404:9.3_0": "Tattha dibbamayo gandho,",
  "tha-ap404:9.4_0": "antalikkhā pavassati.",
  "tha-ap404:10.1_0": "Tatrāpi nāmadheyyaṁ me,",
  "tha-ap404:10.2_0": "puṇṇakoti ahū tadā;",
  "tha-ap404:10.3_0": "Devabhūto manusso vā,",
  "tha-ap404:10.4_0": "saṅkappaṁ pūrayāmahaṁ.",
  "tha-ap404:11.1_0": "Idaṁ pacchimakaṁ mayhaṁ,",
  "tha-ap404:11.2_0": "carimo vattate bhavo;",
  "tha-ap404:11.3_0": "Idhāpi puṇṇako nāma,",
  "tha-ap404:11.4_0": "nāmadheyyaṁ pakāsati.",
  "tha-ap404:12.1_0": "Tosayitvāna sambuddhaṁ,",
  "tha-ap404:12.2_0": "gotamaṁ sakyapuṅgavaṁ;",
  "tha-ap404:12.3_0": "Sabbāsave pariññāya,",
  "tha-ap404:12.4_0": "viharāmi anāsavo.",
  "tha-ap404:13.1_0": "Ekanavutito kappe,",
  "tha-ap404:13.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap404:13.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap404:13.4_0": "tanukiccassidaṁ phalaṁ.",
  "tha-ap404:14.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap404:14.2_0": "…pe…",
  "tha-ap404:14.3_0": "viharāmi anāsavo.",
  "tha-ap404:15.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap404:15.2_0": "…pe…",
  "tha-ap404:15.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap404:16.1_0": "Paṭisambhidā catasso,",
  "tha-ap404:16.2_0": "…pe…",
  "tha-ap404:16.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap404:17.1_0": "Itthaṁ sudaṁ āyasmā puṇṇako thero imā gāthāyo abhāsitthāti.",
  "tha-ap404:18.1_0": "Puṇṇakattherassāpadānaṁ dutiyaṁ."
}