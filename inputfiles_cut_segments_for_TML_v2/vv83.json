{
  "vv83:0.1_0": "Vimānavatthu",
  "vv83:0.2_0": "Purisavimāna",
  "vv83:0.3_0": "Sunikkhittavagga",
  "vv83:0.4_0": "9. Maṭṭhakuṇḍalīvimānavatthu",
  "vv83:1.1_0": "“Alaṅkato maṭṭhakuṇḍalī,",
  "vv83:1.2_0": "Māladhārī haricandanussado;",
  "vv83:1.3_0": "Bāhā paggayha kandasi,",
  "vv83:1.4_0": "Vanamajjhe kiṁ dukkhito tuvan”ti.",
  "vv83:2.1_0": "“Sovaṇṇamayo pabhassaro,",
  "vv83:2.2_0": "Uppanno rathapañjaro mama;",
  "vv83:2.3_0": "Tassa cakkayugaṁ na vindāmi,",
  "vv83:2.4_0": "Tena dukkhena jahāmi jīvitan”ti.",
  "vv83:3.1_0": "“Sovaṇṇamayaṁ maṇimayaṁ,",
  "vv83:3.2_0": "Lohitakamayaṁ atha rūpiyamayaṁ;",
  "vv83:3.3_0": "Ācikkha me bhaddamāṇava,",
  "vv83:3.4_0": "Cakkayugaṁ paṭipādayāmi te”ti.",
  "vv83:4.1_0": "So māṇavo tassa pāvadi,",
  "vv83:4.2_0": "“Candasūriyā ubhayettha dissare;",
  "vv83:4.3_0": "Sovaṇṇamayo ratho mama,",
  "vv83:4.4_0": "Tena cakkayugena sobhatī”ti.",
  "vv83:5.1_0": "“Bālo kho tvaṁ asi māṇava,",
  "vv83:5.2_0": "Yo tvaṁ patthayase apatthiyaṁ;",
  "vv83:5.3_0": "Maññāmi tuvaṁ marissasi,",
  "vv83:5.4_0": "Na hi tvaṁ lacchasi candasūriye”ti.",
  "vv83:6.1_0": "“Gamanāgamanampi dissati,",
  "vv83:6.2_0": "Vaṇṇadhātu ubhayattha vīthiyā;",
  "vv83:6.3_0": "Peto kālakato na dissati,",
  "vv83:6.4_0": "Ko nidha kandataṁ bālyataro”ti.",
  "vv83:7.1_0": "“Saccaṁ kho vadesi māṇava,",
  "vv83:7.2_0": "Ahameva kandataṁ bālyataro;",
  "vv83:7.3_0": "Candaṁ viya dārako rudaṁ,",
  "vv83:7.4_0": "Petaṁ kālakatābhipatthayinti.",
  "vv83:8.1_0": "Ādittaṁ vata maṁ santaṁ,",
  "vv83:8.2_0": "ghatasittaṁva pāvakaṁ;",
  "vv83:8.3_0": "Vārinā viya osiñcaṁ,",
  "vv83:8.4_0": "sabbaṁ nibbāpaye daraṁ.",
  "vv83:9.1_0": "Abbahī vata me sallaṁ,",
  "vv83:9.2_0": "sokaṁ hadayanissitaṁ;",
  "vv83:9.3_0": "Yo me sokaparetassa,",
  "vv83:9.4_0": "puttasokaṁ apānudi.",
  "vv83:10.1_0": "Svāhaṁ abbūḷhasallosmi,",
  "vv83:10.2_0": "sītibhūtosmi nibbuto;",
  "vv83:10.3_0": "Na socāmi na rodāmi,",
  "vv83:10.4_0": "tava sutvāna māṇavā”ti.",
  "vv83:11.1_0": "“Devatā nusi gandhabbo,",
  "vv83:11.2_0": "adu sakko purindado;",
  "vv83:11.3_0": "Ko vā tvaṁ kassa vā putto,",
  "vv83:11.4_0": "kathaṁ jānemu taṁ mayan”ti.",
  "vv83:12.1_0": "“Yañca kandasi yañca rodasi,",
  "vv83:12.2_0": "Puttaṁ āḷāhane sayaṁ dahitvā;",
  "vv83:12.3_0": "Svāhaṁ kusalaṁ karitvā kammaṁ,",
  "vv83:12.4_0": "Tidasānaṁ sahabyataṁ gato”ti.",
  "vv83:13.1_0": "“Appaṁ vā bahuṁ vā nāddasāma,",
  "vv83:13.2_0": "Dānaṁ dadantassa sake agāre;",
  "vv83:13.3_0": "Uposathakammaṁ vā tādisaṁ,",
  "vv83:13.4_0": "Kena kammena gatosi devalokan”ti.",
  "vv83:14.1_0": "“Ābādhikohaṁ dukkhito gilāno,",
  "vv83:14.2_0": "Āturarūpomhi sake nivesane;",
  "vv83:14.3_0": "Buddhaṁ vigatarajaṁ vitiṇṇakaṅkhaṁ,",
  "vv83:14.4_0": "Addakkhiṁ sugataṁ anomapaññaṁ.",
  "vv83:15.1_0": "Svāhaṁ muditamano pasannacitto,",
  "vv83:15.2_0": "Añjaliṁ akariṁ tathāgatassa;",
  "vv83:15.3_0": "Tāhaṁ kusalaṁ karitvāna kammaṁ,",
  "vv83:15.4_0": "Tidasānaṁ sahabyataṁ gato”ti.",
  "vv83:16.1_0": "“Acchariyaṁ vata abbhutaṁ vata,",
  "vv83:16.2_0": "Añjalikammassa ayamīdiso vipāko;",
  "vv83:16.3_0": "Ahampi muditamano pasannacitto,",
  "vv83:16.4_0": "Ajjeva buddhaṁ saraṇaṁ vajāmī”ti.",
  "vv83:17.1_0": "“Ajjeva buddhaṁ saraṇaṁ vajāhi,",
  "vv83:17.2_0": "Dhammañca saṅghañca pasannacitto;",
  "vv83:17.3_0": "Tatheva sikkhāya padāni pañca,",
  "vv83:17.4_0": "Akhaṇḍaphullāni samādiyassu.",
  "vv83:18.1_0": "Pāṇātipātā viramassu khippaṁ,",
  "vv83:18.2_0": "Loke adinnaṁ parivajjayassu;",
  "vv83:18.3_0": "Amajjapo mā ca musā bhaṇāhi,",
  "vv83:18.4_0": "Sakena dārena ca hohi tuṭṭho”ti.",
  "vv83:19.1_0": "“Atthakāmosi me yakkha,",
  "vv83:19.2_0": "hitakāmosi devate;",
  "vv83:19.3_0": "Karomi tuyhaṁ vacanaṁ,",
  "vv83:19.4_0": "tvaṁsi ācariyo mamāti.",
  "vv83:20.1_0": "Upemi saraṇaṁ buddhaṁ,",
  "vv83:20.2_0": "dhammañcāpi anuttaraṁ;",
  "vv83:20.3_0": "Saṅghañca naradevassa,",
  "vv83:20.4_0": "gacchāmi saraṇaṁ ahaṁ.",
  "vv83:21.1_0": "Pāṇātipātā viramāmi khippaṁ,",
  "vv83:21.2_0": "Loke adinnaṁ parivajjayāmi;",
  "vv83:21.3_0": "Amajjapo no ca musā bhaṇāmi,",
  "vv83:21.4_0": "Sakena dārena ca homi tuṭṭho”ti.",
  "vv83:22.1_0": "Maṭṭhakuṇḍalīvimānaṁ navamaṁ."
}