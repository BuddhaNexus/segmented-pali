{
  "tha-ap34:0.1_0": "Therāpadāna",
  "tha-ap34:0.2_0": "Kuṇḍadhānavagga",
  "tha-ap34:0.3_0": "2. Sāgatattheraapadāna",
  "tha-ap34:1.1_0": "“Sobhito nāma nāmena,",
  "tha-ap34:1.2_0": "ahosiṁ brāhmaṇo tadā;",
  "tha-ap34:1.3_0": "Purakkhato sasissehi,",
  "tha-ap34:1.4_0": "ārāmaṁ agamāsahaṁ.",
  "tha-ap34:2.1_0": "Bhagavā tamhi samaye,",
  "tha-ap34:2.2_0": "bhikkhusaṅghapurakkhato;",
  "tha-ap34:2.3_0": "Ārāmadvārā nikkhamma,",
  "tha-ap34:2.4_0": "aṭṭhāsi purisuttamo.",
  "tha-ap34:3.1_0": "Tamaddasāsiṁ sambuddhaṁ,",
  "tha-ap34:3.2_0": "dantaṁ dantapurakkhataṁ;",
  "tha-ap34:3.3_0": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap34:3.4_0": "santhaviṁ lokanāyakaṁ.",
  "tha-ap34:4.1_0": "Ye keci pādapā sabbe,",
  "tha-ap34:4.2_0": "mahiyā te virūhare;",
  "tha-ap34:4.3_0": "Buddhimanto tathā sattā,",
  "tha-ap34:4.4_0": "ruhanti jinasāsane.",
  "tha-ap34:5.1_0": "Satthavāhosi sappañño,",
  "tha-ap34:5.2_0": "mahesi bahuke jane;",
  "tha-ap34:5.3_0": "Vipathā uddharitvāna,",
  "tha-ap34:5.4_0": "pathaṁ ācikkhase tuvaṁ.",
  "tha-ap34:6.1_0": "Danto dantaparikiṇṇo,",
  "tha-ap34:6.2_0": "jhāyī jhānaratehi ca;",
  "tha-ap34:6.3_0": "Ātāpī pahitattehi,",
  "tha-ap34:6.4_0": "upasantehi tādibhi.",
  "tha-ap34:7.1_0": "Alaṅkato parisāhi,",
  "tha-ap34:7.2_0": "puññañāṇehi sobhati;",
  "tha-ap34:7.3_0": "Pabhā niddhāvate tuyhaṁ,",
  "tha-ap34:7.4_0": "sūriyodayane yathā.",
  "tha-ap34:8.1_0": "Pasannacittaṁ disvāna,",
  "tha-ap34:8.2_0": "mahesī padumuttaro;",
  "tha-ap34:8.3_0": "Bhikkhusaṅghe ṭhito satthā,",
  "tha-ap34:8.4_0": "imā gāthā abhāsatha.",
  "tha-ap34:9.1_0": "‘Yo so hāsaṁ janetvāna,",
  "tha-ap34:9.2_0": "mamaṁ kittesi brāhmaṇo;",
  "tha-ap34:9.3_0": "Kappānaṁ satasahassaṁ,",
  "tha-ap34:9.4_0": "devaloke ramissati.",
  "tha-ap34:10.1_0": "Tusitā hi cavitvāna,",
  "tha-ap34:10.2_0": "sukkamūlena codito;",
  "tha-ap34:10.3_0": "Gotamassa bhagavato,",
  "tha-ap34:10.4_0": "sāsane pabbajissati.",
  "tha-ap34:11.1_0": "Tena kammena sukatena,",
  "tha-ap34:11.2_0": "arahattaṁ labhissati;",
  "tha-ap34:11.3_0": "Sāgato nāma nāmena,",
  "tha-ap34:11.4_0": "hessati satthu sāvako’.",
  "tha-ap34:12.1_0": "Pabbajitvāna kāyena,",
  "tha-ap34:12.2_0": "pāpakammaṁ vivajjayiṁ;",
  "tha-ap34:12.3_0": "Vacīduccaritaṁ hitvā,",
  "tha-ap34:12.4_0": "ājīvaṁ parisodhayiṁ.",
  "tha-ap34:13.1_0": "Evaṁ viharamānohaṁ,",
  "tha-ap34:13.2_0": "tejodhātūsu kovido;",
  "tha-ap34:13.3_0": "Sabbāsave pariññāya,",
  "tha-ap34:13.4_0": "viharāmi anāsavo.",
  "tha-ap34:14.1_0": "Paṭisambhidā catasso,",
  "tha-ap34:14.2_0": "…pe…",
  "tha-ap34:14.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap34:15.1_0": "Itthaṁ sudaṁ āyasmā sāgato thero imā gāthāyo abhāsitthāti.",
  "tha-ap34:16.1_0": "Sāgatattherassāpadānaṁ dutiyaṁ."
}