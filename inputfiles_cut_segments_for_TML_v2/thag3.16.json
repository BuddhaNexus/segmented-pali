{
  "thag3.16:0.1_0": "Theragāthā",
  "thag3.16:0.2_0": "Tikanipāta",
  "thag3.16:0.3_0": "Paṭhamavagga",
  "thag3.16:0.4_0": "3.16. Vimalattheragāthā",
  "thag3.16:1.1_0": "“Pāpamitte vivajjetvā,",
  "thag3.16:1.2_0": "bhajeyyuttamapuggalaṁ;",
  "thag3.16:1.3_0": "Ovāde cassa tiṭṭheyya,",
  "thag3.16:1.4_0": "patthento acalaṁ sukhaṁ.",
  "thag3.16:2.1_0": "Parittaṁ dārumāruyha,",
  "thag3.16:2.2_0": "yathā sīde mahaṇṇave;",
  "thag3.16:2.3_0": "Evaṁ kusītamāgamma,",
  "thag3.16:2.4_0": "sādhujīvīpi sīdati;",
  "thag3.16:2.5_0": "Tasmā taṁ parivajjeyya,",
  "thag3.16:2.6_0": "kusītaṁ hīnavīriyaṁ.",
  "thag3.16:3.1_0": "Pavivittehi ariyehi,",
  "thag3.16:3.2_0": "pahitattehi jhāyibhi;",
  "thag3.16:3.3_0": "Niccaṁ āraddhavīriyehi,",
  "thag3.16:3.4_0": "paṇḍitehi sahāvase”ti.",
  "thag3.16:3.5_0": "…",
  "thag3.16:3.6_0": "Vimalo thero ….",
  "thag3.16:3.7_0": "Tikanipāto niṭṭhito.",
  "thag3.16:4.0_0": "Tatruddānaṁ",
  "thag3.16:4.1_0": "Aṅgaṇiko bhāradvājo,",
  "thag3.16:4.2_0": "paccayo bākulo isi;",
  "thag3.16:4.3_0": "Dhaniyo mātaṅgaputto,",
  "thag3.16:4.4_0": "sobhito vāraṇo isi.",
  "thag3.16:5.1_0": "Vassiko ca yasojo ca,",
  "thag3.16:5.2_0": "sāṭimattiyupāli ca;",
  "thag3.16:5.3_0": "Uttarapālo abhibhūto,",
  "thag3.16:5.4_0": "gotamo hāritopi ca.",
  "thag3.16:6.1_0": "Thero tikanipātamhi,",
  "thag3.16:6.2_0": "nibbāne vimalo kato;",
  "thag3.16:6.3_0": "Aṭṭhatālīsa gāthāyo,",
  "thag3.16:6.4_0": "therā soḷasa kittitāti."
}