{
  "pv22:0.1_0": "Petavatthu",
  "pv22:0.2_0": "Ubbarivagga",
  "pv22:0.3_0": "10. Uttaramātupetivatthu",
  "pv22:1.1_0": "Divāvihāragataṁ bhikkhuṁ,",
  "pv22:1.2_0": "gaṅgātīre nisinnakaṁ;",
  "pv22:1.3_0": "Taṁ petī upasaṅkamma,",
  "pv22:1.4_0": "dubbaṇṇā bhīrudassanā.",
  "pv22:2.1_0": "Kesā cassā atidīghā,",
  "pv22:2.2_0": "yāvabhūmāvalambare;",
  "pv22:2.3_0": "Kesehi sā paṭicchannā,",
  "pv22:2.4_0": "samaṇaṁ etadabravi.",
  "pv22:3.1_0": "“Pañcapaṇṇāsavassāni,",
  "pv22:3.2_0": "yato kālaṅkatā ahaṁ;",
  "pv22:3.3_0": "Nābhijānāmi bhuttaṁ vā,",
  "pv22:3.4_0": "pītaṁ vā pana pāniyaṁ;",
  "pv22:3.5_0": "Dehi tvaṁ pāniyaṁ bhante,",
  "pv22:3.6_0": "tasitā pāniyāya me”ti.",
  "pv22:4.1_0": "“Ayaṁ sītodikā gaṅgā,",
  "pv22:4.2_0": "himavantato sandati;",
  "pv22:4.3_0": "Piva etto gahetvāna,",
  "pv22:4.4_0": "kiṁ maṁ yācasi pāniyan”ti.",
  "pv22:5.1_0": "“Sacāhaṁ bhante gaṅgāya,",
  "pv22:5.2_0": "sayaṁ gaṇhāmi pāniyaṁ;",
  "pv22:5.3_0": "Lohitaṁ me parivattati,",
  "pv22:5.4_0": "tasmā yācāmi pāniyan”ti.",
  "pv22:6.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv22:6.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv22:6.3_0": "Kissa kammavipākena,",
  "pv22:6.4_0": "gaṅgā te hoti lohitan”ti.",
  "pv22:7.1_0": "“Putto me uttaro nāma,",
  "pv22:7.2_0": "saddho āsi upāsako;",
  "pv22:7.3_0": "So ca mayhaṁ akāmāya,",
  "pv22:7.4_0": "samaṇānaṁ pavecchati.",
  "pv22:8.1_0": "Cīvaraṁ piṇḍapātañca,",
  "pv22:8.2_0": "paccayaṁ sayanāsanaṁ;",
  "pv22:8.3_0": "Tamahaṁ paribhāsāmi,",
  "pv22:8.4_0": "maccherena upaddutā.",
  "pv22:9.1_0": "Yaṁ tvaṁ mayhaṁ akāmāya,",
  "pv22:9.2_0": "samaṇānaṁ pavecchasi;",
  "pv22:9.3_0": "Cīvaraṁ piṇḍapātañca,",
  "pv22:9.4_0": "paccayaṁ sayanāsanaṁ.",
  "pv22:10.1_0": "Etaṁ te paralokasmiṁ,",
  "pv22:10.2_0": "lohitaṁ hotu uttara;",
  "pv22:10.3_0": "Tassa kammassa vipākena,",
  "pv22:10.4_0": "gaṅgā me hoti lohitan”ti.",
  "pv22:11.1_0": "Uttaramātupetivatthu dasamaṁ."
}