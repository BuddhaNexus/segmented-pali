{
  "thi-ap40:0.1_0": "Therīapadāna",
  "thi-ap40:0.2_0": "Khattiyāvagga",
  "thi-ap40:0.3_0": "10 Pesalātherīapadāna",
  "thi-ap40:1.1_0": "“Imamhi bhaddake kappe,",
  "thi-ap40:1.2_0": "brahmabandhu mahāyaso;",
  "thi-ap40:1.3_0": "Kassapo nāma gottena,",
  "thi-ap40:1.4_0": "uppajji vadataṁ varo.",
  "thi-ap40:2.1_0": "Sāvatthiyaṁ pure vare,",
  "thi-ap40:2.2_0": "upāsakakule ahaṁ;",
  "thi-ap40:2.3_0": "Pasūtā taṁ jinavaraṁ,",
  "thi-ap40:2.4_0": "disvā sutvā ca desanaṁ.",
  "thi-ap40:3.1_0": "Taṁ vīraṁ saraṇaṁ gantvā,",
  "thi-ap40:3.2_0": "sīlāni ca samādiyiṁ;",
  "thi-ap40:3.3_0": "Kadāci so mahāvīro,",
  "thi-ap40:3.4_0": "mahājanasamāgame.",
  "thi-ap40:4.1_0": "Attano abhisambodhiṁ,",
  "thi-ap40:4.2_0": "pakāsesi narāsabho;",
  "thi-ap40:4.3_0": "Ananussutadhammesu,",
  "thi-ap40:4.4_0": "pubbe dukkhādikesu ca.",
  "thi-ap40:5.1_0": "Cakkhu ñāṇañca paññā ca,",
  "thi-ap40:5.2_0": "vijjāloko ca āsi me;",
  "thi-ap40:5.3_0": "Taṁ sutvā uggahetvāna,",
  "thi-ap40:5.4_0": "paripucchiñca bhikkhavo.",
  "thi-ap40:6.1_0": "Tena kammena sukatena,",
  "thi-ap40:6.2_0": "cetanāpaṇidhīhi ca;",
  "thi-ap40:6.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap40:6.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap40:7.1_0": "Pacchime ca bhave dāni,",
  "thi-ap40:7.2_0": "Jātā seṭṭhimahākule;",
  "thi-ap40:7.3_0": "Upecca buddhaṁ saddhammaṁ,",
  "thi-ap40:7.4_0": "Sutvā saccūpasaṁhitaṁ.",
  "thi-ap40:8.1_0": "Pabbajitvācireneva,",
  "thi-ap40:8.2_0": "saccatthāni vicintayaṁ;",
  "thi-ap40:8.3_0": "Khepetvā āsave sabbe,",
  "thi-ap40:8.4_0": "arahattamapāpuṇiṁ.",
  "thi-ap40:9.1_0": "Iddhīsu ca vasī homi,",
  "thi-ap40:9.2_0": "dibbāya sotadhātuyā;",
  "thi-ap40:9.3_0": "Cetopariyañāṇassa,",
  "thi-ap40:9.4_0": "vasī homi mahāmune.",
  "thi-ap40:10.1_0": "Pubbenivāsaṁ jānāmi,",
  "thi-ap40:10.2_0": "dibbacakkhu visodhitaṁ;",
  "thi-ap40:10.3_0": "Sabbāsavā parikkhīṇā,",
  "thi-ap40:10.4_0": "natthi dāni punabbhavo.",
  "thi-ap40:11.1_0": "Atthadhammaniruttīsu,",
  "thi-ap40:11.2_0": "paṭibhāne tatheva ca;",
  "thi-ap40:11.3_0": "Ñāṇaṁ me vimalaṁ suddhaṁ,",
  "thi-ap40:11.4_0": "buddhaseṭṭhassa vāhasā.",
  "thi-ap40:12.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap40:12.2_0": "bhavā sabbe samūhatā;",
  "thi-ap40:12.3_0": "Nāgīva bandhanaṁ chetvā,",
  "thi-ap40:12.4_0": "viharāmi anāsavā.",
  "thi-ap40:13.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap40:13.2_0": "mama buddhassa santike;",
  "thi-ap40:13.3_0": "Tisso vijjā anuppattā,",
  "thi-ap40:13.4_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap40:14.1_0": "Paṭisambhidā catasso,",
  "thi-ap40:14.2_0": "Vimokkhāpi ca aṭṭhime;",
  "thi-ap40:14.3_0": "Chaḷabhiññā sacchikatā,",
  "thi-ap40:14.4_0": "Kataṁ buddhassa sāsanaṁ”.",
  "thi-ap40:15.1_0": "Itthaṁ sudaṁ pesalā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap40:16.1_0": "Pesalātheriyāpadānaṁ dasamaṁ.",
  "thi-ap40:16.2_0": "Khattiyāvaggo catuttho.",
  "thi-ap40:17.1_0": "Tassuddānaṁ",
  "thi-ap40:18.1_0": "Khattiyā brāhmaṇī ceva,",
  "thi-ap40:18.2_0": "tathā uppaladāyikā;",
  "thi-ap40:18.3_0": "Siṅgālamātā sukkā ca,",
  "thi-ap40:18.4_0": "abhirūpā aḍḍhakāsikā.",
  "thi-ap40:19.1_0": "Puṇṇā ca ambapālī ca,",
  "thi-ap40:19.2_0": "pesalāti ca tā dasa;",
  "thi-ap40:19.3_0": "Gāthāyo dvisatānettha,",
  "thi-ap40:19.4_0": "dvicattālīsa cuttari.",
  "thi-ap40:20.1_0": "Atha vagguddānaṁ",
  "thi-ap40:21.1_0": "Sumedhā ekūposathā,",
  "thi-ap40:21.2_0": "kuṇḍalakesī khattiyā;",
  "thi-ap40:21.3_0": "Sahassaṁ tisatā gāthā,",
  "thi-ap40:21.4_0": "sattatālīsa piṇḍitā.",
  "thi-ap40:22.1_0": "Saha uddānagāthāhi,",
  "thi-ap40:22.2_0": "gaṇitāyo vibhāvibhi;",
  "thi-ap40:22.3_0": "Sahassaṁ tisataṁ gāthā,",
  "thi-ap40:22.4_0": "sattapaññāsameva cāti.",
  "thi-ap40:23.1_0": "Therikāpadānaṁ samattaṁ.",
  "thi-ap40:24.1_0": "Apadānapāḷi samattā."
}