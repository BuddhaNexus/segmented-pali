{
  "ja528:0.1_0": "Jātaka",
  "ja528:0.2_0": "Paṇṇāsanipāta",
  "ja528:0.3_0": "Niḷinikāvagga",
  "ja528:0.4_0": "3. Mahābodhijātaka",
  "ja528:1.1_0": "“Kiṁ nu daṇḍaṁ kimajinaṁ,",
  "ja528:1.2_0": "kiṁ chattaṁ kimupāhanaṁ;",
  "ja528:1.3_0": "Kimaṅkusañca pattañca,",
  "ja528:1.4_0": "saṅghāṭiñcāpi brāhmaṇa;",
  "ja528:1.5_0": "Taramānarūpohāsi,",
  "ja528:1.6_0": "kiṁ nu patthayase disaṁ”.",
  "ja528:2.1_0": "“Dvādasetāni vassāni,",
  "ja528:2.2_0": "vusitāni tavantike;",
  "ja528:2.3_0": "Nābhijānāmi soṇena,",
  "ja528:2.4_0": "piṅgalenābhikūjitaṁ.",
  "ja528:3.1_0": "Svāyaṁ dittova nadati,",
  "ja528:3.2_0": "sukkadāṭhaṁ vidaṁsayaṁ;",
  "ja528:3.3_0": "Tava sutvā sabhariyassa,",
  "ja528:3.4_0": "vītasaddhassa maṁ pati”.",
  "ja528:4.1_0": "“Ahu esa kato doso,",
  "ja528:4.2_0": "yathā bhāsasi brāhmaṇa;",
  "ja528:4.3_0": "Esa bhiyyo pasīdāmi,",
  "ja528:4.4_0": "vasa brāhmaṇa māgamā”.",
  "ja528:5.1_0": "“Sabbaseto pure āsi,",
  "ja528:5.2_0": "tatopi sabalo ahu;",
  "ja528:5.3_0": "Sabbalohitako dāni,",
  "ja528:5.4_0": "kālo pakkamituṁ mama.",
  "ja528:6.1_0": "Abbhantaraṁ pure āsi,",
  "ja528:6.2_0": "tato majjhe tato bahi;",
  "ja528:6.3_0": "Purā niddhamanā hoti,",
  "ja528:6.4_0": "sayameva vajāmahaṁ.",
  "ja528:7.1_0": "Vītasaddhaṁ na seveyya,",
  "ja528:7.2_0": "udapānaṁvanodakaṁ;",
  "ja528:7.3_0": "Sacepi naṁ anukhaṇe,",
  "ja528:7.4_0": "vāri kaddamagandhikaṁ.",
  "ja528:8.1_0": "Pasannameva seveyya,",
  "ja528:8.2_0": "appasannaṁ vivajjaye;",
  "ja528:8.3_0": "Pasannaṁ payirupāseyya,",
  "ja528:8.4_0": "rahadaṁ vudakatthiko.",
  "ja528:9.1_0": "Bhaje bhajantaṁ purisaṁ,",
  "ja528:9.2_0": "abhajantaṁ na bhajjaye;",
  "ja528:9.3_0": "Asappurisadhammo so,",
  "ja528:9.4_0": "yo bhajantaṁ na bhajjati.",
  "ja528:10.1_0": "Yo bhajantaṁ na bhajati,",
  "ja528:10.2_0": "sevamānaṁ na sevati;",
  "ja528:10.3_0": "Sa ve manussapāpiṭṭho,",
  "ja528:10.4_0": "migo sākhassito yathā.",
  "ja528:11.1_0": "Accābhikkhaṇasaṁsaggā,",
  "ja528:11.2_0": "asamosaraṇena ca;",
  "ja528:11.3_0": "Etena mittā jīranti,",
  "ja528:11.4_0": "akāle yācanāya ca.",
  "ja528:12.1_0": "Tasmā nābhikkhaṇaṁ gacche,",
  "ja528:12.2_0": "na ca gacche cirāciraṁ;",
  "ja528:12.3_0": "Kālena yācaṁ yāceyya,",
  "ja528:12.4_0": "evaṁ mittā na jīyare.",
  "ja528:13.1_0": "Aticiraṁ nivāsena,",
  "ja528:13.2_0": "piyo bhavati appiyo;",
  "ja528:13.3_0": "Āmanta kho taṁ gacchāma,",
  "ja528:13.4_0": "purā te homa appiyā”.",
  "ja528:14.1_0": "“Evañce yācamānānaṁ,",
  "ja528:14.2_0": "Añjaliṁ nāvabujjhasi;",
  "ja528:14.3_0": "Paricārakānaṁ sataṁ,",
  "ja528:14.4_0": "Vacanaṁ na karosi no;",
  "ja528:14.5_0": "Evaṁ taṁ abhiyācāma,",
  "ja528:14.6_0": "Puna kayirāsi pariyāyaṁ”.",
  "ja528:15.1_0": "“Evañce no viharataṁ,",
  "ja528:15.2_0": "Antarāyo na hessati;",
  "ja528:15.3_0": "Tuyhaṁ vāpi mahārāja,",
  "ja528:15.4_0": "Mayhaṁ vā raṭṭhavaddhana;",
  "ja528:15.5_0": "Appeva nāma passema,",
  "ja528:15.6_0": "Ahorattānamaccaye.",
  "ja528:16.1_0": "Udīraṇā ce saṅgatyā,",
  "ja528:16.2_0": "bhāvāya manuvattati;",
  "ja528:16.3_0": "Akāmā akaraṇīyaṁ vā,",
  "ja528:16.4_0": "karaṇīyaṁ vāpi kubbati;",
  "ja528:16.5_0": "Akāmākaraṇīyamhi,",
  "ja528:16.6_0": "kvidha pāpena lippati.",
  "ja528:17.1_0": "So ce attho ca dhammo ca,",
  "ja528:17.2_0": "kalyāṇo na ca pāpako;",
  "ja528:17.3_0": "Bhoto ce vacanaṁ saccaṁ,",
  "ja528:17.4_0": "suhato vānaro mayā.",
  "ja528:18.1_0": "Attano ce hi vādassa,",
  "ja528:18.2_0": "aparādhaṁ vijāniyā;",
  "ja528:18.3_0": "Na maṁ tvaṁ garaheyyāsi,",
  "ja528:18.4_0": "bhoto vādo hi tādiso.",
  "ja528:19.1_0": "Issaro sabbalokassa,",
  "ja528:19.2_0": "sace kappeti jīvitaṁ;",
  "ja528:19.3_0": "Iddhiṁ byasanabhāvañca,",
  "ja528:19.4_0": "kammaṁ kalyāṇapāpakaṁ;",
  "ja528:19.5_0": "Niddesakārī puriso,",
  "ja528:19.6_0": "issaro tena lippati.",
  "ja528:20.1_0": "So ce attho ca dhammo ca,",
  "ja528:20.2_0": "kalyāṇo na ca pāpako;",
  "ja528:20.3_0": "Bhoto ce vacanaṁ saccaṁ,",
  "ja528:20.4_0": "suhato vānaro mayā.",
  "ja528:21.1_0": "Attano ce hi vādassa,",
  "ja528:21.2_0": "aparādhaṁ vijāniyā;",
  "ja528:21.3_0": "Na maṁ tvaṁ garaheyyāsi,",
  "ja528:21.4_0": "bhoto vādo hi tādiso.",
  "ja528:22.1_0": "Sace pubbekatahetu,",
  "ja528:22.2_0": "sukhadukkhaṁ nigacchati;",
  "ja528:22.3_0": "Porāṇakaṁ kataṁ pāpaṁ,",
  "ja528:22.4_0": "tameso muccate iṇaṁ;",
  "ja528:22.5_0": "Porāṇakaiṇamokkho,",
  "ja528:22.6_0": "kvidha pāpena lippati.",
  "ja528:23.1_0": "So ce attho ca dhammo ca,",
  "ja528:23.2_0": "kalyāṇo na ca pāpako;",
  "ja528:23.3_0": "Bhoto ce vacanaṁ saccaṁ,",
  "ja528:23.4_0": "suhato vānaro mayā.",
  "ja528:24.1_0": "Attano ce hi vādassa,",
  "ja528:24.2_0": "aparādhaṁ vijāniyā;",
  "ja528:24.3_0": "Na maṁ tvaṁ garaheyyāsi,",
  "ja528:24.4_0": "bhoto vādo hi tādiso.",
  "ja528:25.1_0": "Catunnaṁyevupādāya,",
  "ja528:25.2_0": "rūpaṁ sambhoti pāṇinaṁ;",
  "ja528:25.3_0": "Yato ca rūpaṁ sambhoti,",
  "ja528:25.4_0": "tatthevānupagacchati;",
  "ja528:25.5_0": "Idheva jīvati jīvo,",
  "ja528:25.6_0": "pecca pecca vinassati.",
  "ja528:26.1_0": "Ucchijjati ayaṁ loko,",
  "ja528:26.2_0": "ye bālā ye ca paṇḍitā;",
  "ja528:26.3_0": "Ucchijjamāne lokasmiṁ,",
  "ja528:26.4_0": "kvidha pāpena lippati.",
  "ja528:27.1_0": "So ce attho ca dhammo ca,",
  "ja528:27.2_0": "kalyāṇo na ca pāpako;",
  "ja528:27.3_0": "Bhoto ce vacanaṁ saccaṁ,",
  "ja528:27.4_0": "suhato vānaro mayā.",
  "ja528:28.1_0": "Attano ce hi vādassa,",
  "ja528:28.2_0": "aparādhaṁ vijāniyā;",
  "ja528:28.3_0": "Na maṁ tvaṁ garaheyyāsi,",
  "ja528:28.4_0": "bhoto vādo hi tādiso.",
  "ja528:29.1_0": "Āhu khattavidā loke,",
  "ja528:29.2_0": "bālā paṇḍitamānino;",
  "ja528:29.3_0": "‘Mātaraṁ pitaraṁ haññe,",
  "ja528:29.4_0": "atho jeṭṭhampi bhātaraṁ;",
  "ja528:29.5_0": "Haneyya puttadāre ca,",
  "ja528:29.6_0": "attho ce tādiso siyā’.",
  "ja528:30.1_0": "Yassa rukkhassa chāyāya,",
  "ja528:30.2_0": "nisīdeyya sayeyya vā;",
  "ja528:30.3_0": "Na tassa sākhaṁ bhañjeyya,",
  "ja528:30.4_0": "mittadubbho hi pāpako.",
  "ja528:31.1_0": "Atha atthe samuppanne,",
  "ja528:31.2_0": "samūlamapi abbahe;",
  "ja528:31.3_0": "Attho me sambalenāpi,",
  "ja528:31.4_0": "suhato vānaro mayā.",
  "ja528:32.1_0": "So ce attho ca dhammo ca,",
  "ja528:32.2_0": "kalyāṇo na ca pāpako;",
  "ja528:32.3_0": "Bhoto ce vacanaṁ saccaṁ,",
  "ja528:32.4_0": "suhato vānaro mayā.",
  "ja528:33.1_0": "Attano ce hi vādassa,",
  "ja528:33.2_0": "aparādhaṁ vijāniyā;",
  "ja528:33.3_0": "Na maṁ tvaṁ garaheyyāsi,",
  "ja528:33.4_0": "bhoto vādo hi tādiso.",
  "ja528:34.1_0": "Ahetuvādo puriso,",
  "ja528:34.2_0": "yo ca issarakuttiko;",
  "ja528:34.3_0": "Pubbekatī ca ucchedī,",
  "ja528:34.4_0": "yo ca khattavido naro.",
  "ja528:35.1_0": "Ete asappurisā loke,",
  "ja528:35.2_0": "bālā paṇḍitamānino;",
  "ja528:35.3_0": "Kareyya tādiso pāpaṁ,",
  "ja528:35.4_0": "atho aññampi kāraye;",
  "ja528:35.5_0": "Asappurisasaṁsaggo,",
  "ja528:35.6_0": "dukkhanto kaṭukudrayo.",
  "ja528:36.1_0": "Urabbharūpena vakassu pubbe,",
  "ja528:36.2_0": "Asaṅkito ajayūthaṁ upeti;",
  "ja528:36.3_0": "Hantvā uraṇiṁ ajikaṁ ajañca,",
  "ja528:36.4_0": "Utrāsayitvā yena kāmaṁ paleti.",
  "ja528:37.1_0": "Tathāvidheke samaṇabrāhmaṇāse,",
  "ja528:37.2_0": "Chadanaṁ katvā vañcayanti manusse;",
  "ja528:37.3_0": "Anāsakā thaṇḍilaseyyakā ca,",
  "ja528:37.4_0": "Rajojallaṁ ukkuṭikappadhānaṁ;",
  "ja528:37.5_0": "Pariyāyabhattañca apānakattā,",
  "ja528:37.6_0": "Pāpācārā arahanto vadānā.",
  "ja528:38.1_0": "Ete asappurisā loke,",
  "ja528:38.2_0": "bālā paṇḍitamānino;",
  "ja528:38.3_0": "Kareyya tādiso pāpaṁ,",
  "ja528:38.4_0": "atho aññampi kāraye;",
  "ja528:38.5_0": "Asappurisasaṁsaggo,",
  "ja528:38.6_0": "dukkhanto kaṭukudrayo.",
  "ja528:39.1_0": "Yamāhu natthi vīriyanti,",
  "ja528:39.2_0": "ahetuñca pavadanti ye;",
  "ja528:39.3_0": "Parakāraṁ attakārañca,",
  "ja528:39.4_0": "ye tucchaṁ samavaṇṇayuṁ.",
  "ja528:40.1_0": "Ete asappurisā loke,",
  "ja528:40.2_0": "bālā paṇḍitamānino;",
  "ja528:40.3_0": "Kareyya tādiso pāpaṁ,",
  "ja528:40.4_0": "atho aññampi kāraye;",
  "ja528:40.5_0": "Asappurisasaṁsaggo,",
  "ja528:40.6_0": "dukkhanto kaṭukudrayo.",
  "ja528:41.1_0": "Sace hi vīriyaṁ nāssa,",
  "ja528:41.2_0": "kammaṁ kalyāṇapāpakaṁ;",
  "ja528:41.3_0": "Na bhare vaḍḍhakiṁ rājā,",
  "ja528:41.4_0": "napi yantāni kāraye.",
  "ja528:42.1_0": "Yasmā ca vīriyaṁ atthi,",
  "ja528:42.2_0": "kammaṁ kalyāṇapāpakaṁ;",
  "ja528:42.3_0": "Tasmā yantāni kāreti,",
  "ja528:42.4_0": "rājā bharati vaḍḍhakiṁ.",
  "ja528:43.1_0": "Yadi vassasataṁ devo,",
  "ja528:43.2_0": "na vasse na himaṁ pate;",
  "ja528:43.3_0": "Ucchijjeyya ayaṁ loko,",
  "ja528:43.4_0": "vinasseyya ayaṁ pajā.",
  "ja528:44.1_0": "Yasmā ca vassatī devo,",
  "ja528:44.2_0": "himañcānuphusāyati;",
  "ja528:44.3_0": "Tasmā sassāni paccanti,",
  "ja528:44.4_0": "raṭṭhañca pālite ciraṁ.",
  "ja528:45.1_0": "Gavañce taramānānaṁ,",
  "ja528:45.2_0": "jimhaṁ gacchati puṅgavo;",
  "ja528:45.3_0": "Sabbā tā jimhaṁ gacchanti,",
  "ja528:45.4_0": "nette jimhaṁ gate sati.",
  "ja528:46.1_0": "Evameva manussesu,",
  "ja528:46.2_0": "yo hoti seṭṭhasammato;",
  "ja528:46.3_0": "So ce adhammaṁ carati,",
  "ja528:46.4_0": "pageva itarā pajā;",
  "ja528:46.5_0": "Sabbaṁ raṭṭhaṁ dukhaṁ seti,",
  "ja528:46.6_0": "rājā ce hoti adhammiko.",
  "ja528:47.1_0": "Gavañce taramānānaṁ,",
  "ja528:47.2_0": "ujuṁ gacchati puṅgavo;",
  "ja528:47.3_0": "Sabbā gāvī ujuṁ yanti,",
  "ja528:47.4_0": "nette ujuṁ gate sati.",
  "ja528:48.1_0": "Evameva manussesu,",
  "ja528:48.2_0": "yo hoti seṭṭhasammato;",
  "ja528:48.3_0": "So sace dhammaṁ carati,",
  "ja528:48.4_0": "pageva itarā pajā;",
  "ja528:48.5_0": "Sabbaṁ raṭṭhaṁ sukhaṁ seti,",
  "ja528:48.6_0": "rājā ce hoti dhammiko.",
  "ja528:49.1_0": "Mahārukkhassa phalino,",
  "ja528:49.2_0": "āmaṁ chindati yo phalaṁ;",
  "ja528:49.3_0": "Rasañcassa na jānāti,",
  "ja528:49.4_0": "bījañcassa vinassati.",
  "ja528:50.1_0": "Mahārukkhūpamaṁ raṭṭhaṁ,",
  "ja528:50.2_0": "adhammena pasāsati;",
  "ja528:50.3_0": "Rasañcassa na jānāti,",
  "ja528:50.4_0": "raṭṭhañcassa vinassati.",
  "ja528:51.1_0": "Mahārukkhassa phalino,",
  "ja528:51.2_0": "pakkaṁ chindati yo phalaṁ;",
  "ja528:51.3_0": "Rasañcassa vijānāti,",
  "ja528:51.4_0": "bījañcassa na nassati.",
  "ja528:52.1_0": "Mahārukkhūpamaṁ raṭṭhaṁ,",
  "ja528:52.2_0": "dhammena yo pasāsati;",
  "ja528:52.3_0": "Rasañcassa vijānāti,",
  "ja528:52.4_0": "raṭṭhañcassa na nassati.",
  "ja528:53.1_0": "Yo ca rājā janapadaṁ,",
  "ja528:53.2_0": "adhammena pasāsati;",
  "ja528:53.3_0": "Sabbosadhīhi so rājā,",
  "ja528:53.4_0": "viruddho hoti khattiyo.",
  "ja528:54.1_0": "Tatheva negame hiṁsaṁ,",
  "ja528:54.2_0": "ye yuttā kayavikkaye;",
  "ja528:54.3_0": "Ojadānabalīkāre,",
  "ja528:54.4_0": "sa kosena virujjhati.",
  "ja528:55.1_0": "Pahāravarakhettaññū,",
  "ja528:55.2_0": "saṅgāme katanissame;",
  "ja528:55.3_0": "Ussite hiṁsayaṁ rājā,",
  "ja528:55.4_0": "sa balena virujjhati.",
  "ja528:56.1_0": "Tatheva isayo hiṁsaṁ,",
  "ja528:56.2_0": "saññate brahmacārino;",
  "ja528:56.3_0": "Adhammacārī khattiyo,",
  "ja528:56.4_0": "so saggena virujjhati.",
  "ja528:57.1_0": "Yo ca rājā adhammaṭṭho,",
  "ja528:57.2_0": "bhariyaṁ hanti adūsikaṁ;",
  "ja528:57.3_0": "Luddaṁ pasavate ṭhānaṁ,",
  "ja528:57.4_0": "puttehi ca virujjhati.",
  "ja528:58.1_0": "Dhammaṁ care jānapade,",
  "ja528:58.2_0": "negamesu balesu ca;",
  "ja528:58.3_0": "Isayo ca na hiṁseyya,",
  "ja528:58.4_0": "puttadāre samaṁ care.",
  "ja528:59.1_0": "Sa tādiso bhūmipati,",
  "ja528:59.2_0": "Raṭṭhapālo akodhano;",
  "ja528:59.3_0": "Sapatte sampakampeti,",
  "ja528:59.4_0": "Indova asurādhipo”ti.",
  "ja528:60.1_0": "Mahābodhijātakaṁ tatiyaṁ.",
  "ja528:61.1_0": "Paṇṇāsanipātaṁ niṭṭhitaṁ.",
  "ja528:62.1_0": "Tassuddānaṁ",
  "ja528:63.1_0": "Saniḷīnikamavhayano paṭhamo,",
  "ja528:63.2_0": "Dutiyo pana saummadantivaro;",
  "ja528:63.3_0": "Tatiyo pana bodhisirīvhayano,",
  "ja528:63.4_0": "Kathitā pana tīṇi jinena subhāti."
}