{
  "tha-ap475:0.1_0": "Therāpadāna",
  "tha-ap475:0.2_0": "Naḷamālivagga",
  "tha-ap475:0.3_0": "3. Ukkāsatikattheraapadāna",
  "tha-ap475:1.1_0": "“Kosiyo nāma bhagavā,",
  "tha-ap475:1.2_0": "cittakūṭe vasī tadā;",
  "tha-ap475:1.3_0": "Jhāyī jhānarato buddho,",
  "tha-ap475:1.4_0": "vivekābhirato muni.",
  "tha-ap475:2.1_0": "Ajjhogāhetvā himavantaṁ,",
  "tha-ap475:2.2_0": "Nārīgaṇapurakkhato;",
  "tha-ap475:2.3_0": "Addasaṁ kosiyaṁ buddhaṁ,",
  "tha-ap475:2.4_0": "Puṇṇamāyeva candimaṁ.",
  "tha-ap475:3.1_0": "Ukkāsate gahetvāna,",
  "tha-ap475:3.2_0": "parivāresahaṁ tadā;",
  "tha-ap475:3.3_0": "Sattarattindivaṁ ṭhatvā,",
  "tha-ap475:3.4_0": "aṭṭhamena agacchahaṁ.",
  "tha-ap475:4.1_0": "Vuṭṭhitaṁ kosiyaṁ buddhaṁ,",
  "tha-ap475:4.2_0": "sayambhuṁ aparājitaṁ;",
  "tha-ap475:4.3_0": "Pasannacitto vanditvā,",
  "tha-ap475:4.4_0": "ekaṁ bhikkhaṁ adāsahaṁ.",
  "tha-ap475:5.1_0": "Tena kammena dvipadinda,",
  "tha-ap475:5.2_0": "lokajeṭṭha narāsabha;",
  "tha-ap475:5.3_0": "Uppajjiṁ tusite kāye,",
  "tha-ap475:5.4_0": "ekabhikkhāyidaṁ phalaṁ.",
  "tha-ap475:6.1_0": "Divasañceva rattiñca,",
  "tha-ap475:6.2_0": "āloko hoti me sadā;",
  "tha-ap475:6.3_0": "Samantā yojanasataṁ,",
  "tha-ap475:6.4_0": "obhāsena pharāmahaṁ.",
  "tha-ap475:7.1_0": "Pañcapaññāsakappamhi,",
  "tha-ap475:7.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap475:7.3_0": "Cāturanto vijitāvī,",
  "tha-ap475:7.4_0": "jambumaṇḍassa issaro.",
  "tha-ap475:8.1_0": "Tadā me nagaraṁ āsi,",
  "tha-ap475:8.2_0": "iddhaṁ phītaṁ sunimmitaṁ;",
  "tha-ap475:8.3_0": "Tiṁsayojanamāyāmaṁ,",
  "tha-ap475:8.4_0": "vitthārena ca vīsati.",
  "tha-ap475:9.1_0": "Sobhanaṁ nāma nagaraṁ,",
  "tha-ap475:9.2_0": "vissakammena māpitaṁ;",
  "tha-ap475:9.3_0": "Dasasaddāvivittaṁ taṁ,",
  "tha-ap475:9.4_0": "sammatāḷasamāhitaṁ.",
  "tha-ap475:10.1_0": "Na tamhi nagare atthi,",
  "tha-ap475:10.2_0": "vallikaṭṭhañca mattikā;",
  "tha-ap475:10.3_0": "Sabbasoṇṇamayaṁyeva,",
  "tha-ap475:10.4_0": "jotate niccakālikaṁ.",
  "tha-ap475:11.1_0": "Catupākāraparikkhittaṁ,",
  "tha-ap475:11.2_0": "tayo āsuṁ maṇimayā;",
  "tha-ap475:11.3_0": "Vemajjhe tālapantī ca,",
  "tha-ap475:11.4_0": "vissakammena māpitā.",
  "tha-ap475:12.1_0": "Dasasahassapokkharañño,",
  "tha-ap475:12.2_0": "padumuppalachāditā;",
  "tha-ap475:12.3_0": "Puṇḍarīkehi sañchannā,",
  "tha-ap475:12.4_0": "nānāgandhasamīritā.",
  "tha-ap475:13.1_0": "Catunnavutito kappe,",
  "tha-ap475:13.2_0": "yaṁ ukkaṁ dhārayiṁ ahaṁ;",
  "tha-ap475:13.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap475:13.4_0": "ukkādhārassidaṁ phalaṁ.",
  "tha-ap475:14.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap475:14.2_0": "…pe…",
  "tha-ap475:14.3_0": "viharāmi anāsavo.",
  "tha-ap475:15.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap475:15.2_0": "…pe…",
  "tha-ap475:15.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap475:16.1_0": "Paṭisambhidā catasso,",
  "tha-ap475:16.2_0": "…pe…",
  "tha-ap475:16.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap475:17.1_0": "Itthaṁ sudaṁ āyasmā ukkāsatiko thero imā gāthāyo abhāsitthāti.",
  "tha-ap475:18.1_0": "Ukkāsatikattherassāpadānaṁ tatiyaṁ."
}