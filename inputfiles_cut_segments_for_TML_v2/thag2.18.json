{
  "thag2.18:0.1_0": "Theragāthā",
  "thag2.18:0.2_0": "Dukanipāta",
  "thag2.18:0.3_0": "Dutiyavagga",
  "thag2.18:0.4_0": "2.18 Kimilattheragāthā",
  "thag2.18:1.1_0": "“Pācīnavaṁsadāyamhi,",
  "thag2.18:1.2_0": "sakyaputtā sahāyakā;",
  "thag2.18:1.3_0": "Pahāyānappake bhoge,",
  "thag2.18:1.4_0": "uñchāpattāgate ratā.",
  "thag2.18:2.1_0": "Āraddhavīriyā pahitattā,",
  "thag2.18:2.2_0": "Niccaṁ daḷhaparakkamā;",
  "thag2.18:2.3_0": "Ramanti dhammaratiyā,",
  "thag2.18:2.4_0": "Hitvāna lokiyaṁ ratin”ti.",
  "thag2.18:2.5_0": "… Kimilo thero …."
}