{
  "thag2.2:0.1_0": "Theragāthā",
  "thag2.2:0.2_0": "Dukanipāta",
  "thag2.2:0.3_0": "Paṭhamavagga",
  "thag2.2:0.4_0": "2.2. Piṇḍolabhāradvājattheragāthā",
  "thag2.2:1.1_0": "“Nayidaṁ anayena jīvitaṁ,",
  "thag2.2:1.2_0": "Nāhāro hadayassa santiko;",
  "thag2.2:1.3_0": "Āhāraṭṭhitiko samussayo,",
  "thag2.2:1.4_0": "Iti disvāna carāmi esanaṁ.",
  "thag2.2:2.1_0": "Paṅkoti hi naṁ pavedayuṁ,",
  "thag2.2:2.2_0": "Yāyaṁ vandanapūjanā kulesu;",
  "thag2.2:2.3_0": "Sukhumaṁ sallaṁ durubbahaṁ,",
  "thag2.2:2.4_0": "Sakkāro kāpurisena dujjaho”ti.",
  "thag2.2:2.5_0": "Itthaṁ sudaṁ āyasmā piṇḍolabhāradvājo thero gāthāyo abhāsitthāti."
}