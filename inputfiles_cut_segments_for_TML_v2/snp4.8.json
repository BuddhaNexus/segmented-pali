{
  "snp4.8:0.1_0": "Sutta Nipāta 4.8",
  "snp4.8:0.2_0": "Pasūrasutta",
  "snp4.8:1.1_0": "Idheva suddhī iti vādayanti,",
  "snp4.8:1.2_0": "Nāññesu dhammesu visuddhimāhu;",
  "snp4.8:1.3_0": "Yaṁ nissitā tattha subhaṁ vadānā,",
  "snp4.8:1.4_0": "Paccekasaccesu puthū niviṭṭhā.",
  "snp4.8:2.1_0": "Te vādakāmā parisaṁ vigayha,",
  "snp4.8:2.2_0": "Bālaṁ dahantī mithu aññamaññaṁ;",
  "snp4.8:2.3_0": "Vadanti te aññasitā kathojjaṁ,",
  "snp4.8:2.4_0": "Pasaṁsakāmā kusalā vadānā.",
  "snp4.8:3.1_0": "Yutto kathāyaṁ parisāya majjhe,",
  "snp4.8:3.2_0": "Pasaṁsamicchaṁ vinighāti hoti;",
  "snp4.8:3.3_0": "Apāhatasmiṁ pana maṅku hoti,",
  "snp4.8:3.4_0": "Nindāya so kuppati randhamesī.",
  "snp4.8:4.1_0": "Yamassa vādaṁ parihīnamāhu,",
  "snp4.8:4.2_0": "Apāhataṁ pañhavimaṁsakāse;",
  "snp4.8:4.3_0": "Paridevati socati hīnavādo,",
  "snp4.8:4.4_0": "Upaccagā manti anutthunāti.",
  "snp4.8:5.1_0": "Ete vivādā samaṇesu jātā,",
  "snp4.8:5.2_0": "Etesu ugghātinighāti hoti;",
  "snp4.8:5.3_0": "Etampi disvā virame kathojjaṁ,",
  "snp4.8:5.4_0": "Na haññadatthatthi pasaṁsalābhā.",
  "snp4.8:6.1_0": "Pasaṁsito vā pana tattha hoti,",
  "snp4.8:6.2_0": "Akkhāya vādaṁ parisāya majjhe;",
  "snp4.8:6.3_0": "So hassatī unnamatī ca tena,",
  "snp4.8:6.4_0": "Pappuyya tamatthaṁ yathā mano ahu.",
  "snp4.8:7.1_0": "Yā unnatī sāssa vighātabhūmi,",
  "snp4.8:7.2_0": "Mānātimānaṁ vadate paneso;",
  "snp4.8:7.3_0": "Etampi disvā na vivādayetha,",
  "snp4.8:7.4_0": "Na hi tena suddhiṁ kusalā vadanti.",
  "snp4.8:8.1_0": "Sūro yathā rājakhādāya puṭṭho,",
  "snp4.8:8.2_0": "Abhigajjameti paṭisūramicchaṁ;",
  "snp4.8:8.3_0": "Yeneva so tena palehi sūra,",
  "snp4.8:8.4_0": "Pubbeva natthi yadidaṁ yudhāya.",
  "snp4.8:9.1_0": "Ye diṭṭhimuggayha vivādayanti,",
  "snp4.8:9.2_0": "Idameva saccanti ca vādayanti;",
  "snp4.8:9.3_0": "Te tvaṁ vadassū na hi tedha atthi,",
  "snp4.8:9.4_0": "Vādamhi jāte paṭisenikattā.",
  "snp4.8:10.1_0": "Visenikatvā pana ye caranti,",
  "snp4.8:10.2_0": "Diṭṭhīhi diṭṭhiṁ avirujjhamānā;",
  "snp4.8:10.3_0": "Tesu tvaṁ kiṁ labhetho pasūra,",
  "snp4.8:10.4_0": "Yesīdha natthī paramuggahītaṁ.",
  "snp4.8:11.1_0": "Atha tvaṁ pavitakkamāgamā,",
  "snp4.8:11.2_0": "Manasā diṭṭhigatāni cintayanto;",
  "snp4.8:11.3_0": "Dhonena yugaṁ samāgamā,",
  "snp4.8:11.4_0": "Na hi tvaṁ sakkhasi sampayātaveti.",
  "snp4.8:11.5_0": "Pasūrasuttaṁ aṭṭhamaṁ."
}