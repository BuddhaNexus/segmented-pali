{
  "anya-e0703n25:0_0": "Chabbīsatima pariccheda",
  "anya-e0703n25:1_0": "Maricavaṭṭikavihāramaho",
  "anya-e0703n25:2_0": "1.",
  "anya-e0703n25:3_0": "Ekacchattaṁ karitvāna, laṁkārajjaṁ mahāyaso;",
  "anya-e0703n25:4_0": "Nānantaraṁ saṁvidahi, yodhānaṁ so yathārahaṁ.",
  "anya-e0703n25:5_0": "2.",
  "anya-e0703n25:6_0": "Theraputtābhayo yodho, diyyamānaṁ na icchitaṁ;",
  "anya-e0703n25:7_0": "Pucchitova kimatthanti, yuddhamatthīti abravi.",
  "anya-e0703n25:8_0": "3.",
  "anya-e0703n25:9_0": "Ekarajje kate yuddhaṁ, kināmattīti pucchito;",
  "anya-e0703n25:10_0": "Yuddhaṁ kilesa corehi, karissāmi sudujjayaṁ.",
  "anya-e0703n25:11_0": "4.",
  "anya-e0703n25:12_0": "Icceva māha taṁ rājā, punappunaṁ nisedhayi;",
  "anya-e0703n25:13_0": "Punappunaṁ soyācitvā, raññonuññāya pabbaji.",
  "anya-e0703n25:14_0": "5.",
  "anya-e0703n25:15_0": "Pabbajitvā ca kālena, arahattamapāpuṇi;",
  "anya-e0703n25:16_0": "Pañcakhīṇāsavasata-parivāerā ahosi ca.",
  "anya-e0703n25:17_0": "6.",
  "anya-e0703n25:18_0": "Chattamaṅgala sattāhe, gate gatabhayo’ bhayo;",
  "anya-e0703n25:19_0": "Rājā katā bhisekova, mahatā vibhavena so.",
  "anya-e0703n25:20_0": "7.",
  "anya-e0703n25:21_0": "Tissavāpi’magā kīḷa-vidhinā samalaṅka taṁ;",
  "anya-e0703n25:22_0": "Kīḷituṁ abhisittānaṁ, cārittañcā nurakkhituṁ.",
  "anya-e0703n25:23_0": "8.",
  "anya-e0703n25:24_0": "Rañño paricchadaṁ sabbaṁ, upāyanasatāni ca;",
  "anya-e0703n25:25_0": "Maricavaṭṭivihārassa, ṭhānamhi ṭhapayiṁsu ca.",
  "anya-e0703n25:26_0": "9.",
  "anya-e0703n25:27_0": "Tattheva thūpaṭhānamhi, sadhātuṁ kuntamuttamaṁ;",
  "anya-e0703n25:28_0": "Ṭhapesuṁ kuntadharakā, ujukaṁ rājamānusā.",
  "anya-e0703n25:29_0": "10.",
  "anya-e0703n25:30_0": "Sahorodho mahārājā, kīḷitvā salile divā;",
  "anya-e0703n25:31_0": "Sāyamāhaṁ gamissāma, kuntaṁ vaḍḍhetha bho”iti.",
  "anya-e0703n25:32_0": "11.",
  "anya-e0703n25:33_0": "Cāletuṁ taṁ na sakkhiṁsu, kuntaṁ rājādhikārikā;",
  "anya-e0703n25:34_0": "Gandhāmālāhi pūjesuṁ, rājasenāsamāgatā.",
  "anya-e0703n25:35_0": "12.",
  "anya-e0703n25:36_0": "Rājā mahantaṁ accheraṁ, disvā taṁ haṭṭhamānaso;",
  "anya-e0703n25:37_0": "Vidhāya tattha ārakkhaṁ, pavisitvā puraṁ tato.",
  "anya-e0703n25:38_0": "13.",
  "anya-e0703n25:39_0": "Kuntaṁ parikkhipāpetvā, cetiyaṁ tattha kārayi;",
  "anya-e0703n25:40_0": "Thūpaṁ parikkhipāpetvā, vihārañca akārayi.",
  "anya-e0703n25:41_0": "14.",
  "anya-e0703n25:42_0": "Tīhi vassehi niṭhāsi, vihāro so narissaro;",
  "anya-e0703n25:43_0": "Saṅghaṁ sasannipātesi, viharamahākāraṇā.",
  "anya-e0703n25:44_0": "15.",
  "anya-e0703n25:45_0": "Bhikkhunaṁ satasahassāni, tadā bhikkhuniyo pana;",
  "anya-e0703n25:46_0": "Navuti ca sahassāni, abhaviṁsu samāgatā.",
  "anya-e0703n25:47_0": "16.",
  "anya-e0703n25:48_0": "Tasmiṁ samāgame saṅghaṁ, idamāka mahīpati;",
  "anya-e0703n25:49_0": "“Saṅghaṁ bhante visaritvā, bhuñjiṁ maricavaṭṭikaṁ.",
  "anya-e0703n25:50_0": "17.",
  "anya-e0703n25:51_0": "Hasse’taṁ daṇḍakammaṁ me, bhavatūti akārayi;",
  "anya-e0703n25:52_0": "Sacetiyaṁ maricavaṭṭi-vihāraṁ sumanoharaṁ.",
  "anya-e0703n25:53_0": "18.",
  "anya-e0703n25:54_0": "Patiggaṇhātu taṁ saṅgho, iti so dakkhiṇodakaṁ;",
  "anya-e0703n25:55_0": "Pātitvā bhikkhusaṅghassa, vihāraṁ sumano adā.",
  "anya-e0703n25:56_0": "19.",
  "anya-e0703n25:57_0": "Vihāre taṁ samantāpi, mahantaṁ maṇḍapaṁ subhaṁ;",
  "anya-e0703n25:58_0": "Kāretvā tattha saṅghassa, mahādānaṁ pavattayi.",
  "anya-e0703n25:59_0": "20.",
  "anya-e0703n25:60_0": "Pāde patiṭṭhāpetvāpi,",
  "anya-e0703n25:61_0": "Jale abhayavāpiyā;",
  "anya-e0703n25:62_0": "Kato so maṇḍapo āsi,",
  "anya-e0703n25:63_0": "Seso kāse kathāvakā.",
  "anya-e0703n25:64_0": "21.",
  "anya-e0703n25:65_0": "Sattāhaṁ annapānādiṁ, datvāna manujādhipo;",
  "anya-e0703n25:66_0": "Adā sāmaṇakaṁ sabbaṁ, parikkhāraṁ mahārahaṁ.",
  "anya-e0703n25:67_0": "22.",
  "anya-e0703n25:68_0": "Ahu satasahassaggho, parikkhāro sa ādiko;",
  "anya-e0703n25:69_0": "Ante sahassagghanako, sabba saṅgho ca taṁlabhi.",
  "anya-e0703n25:70_0": "23.",
  "anya-e0703n25:71_0": "Yuddhe dāne ca sūrena, sūrinā ratanattaye;",
  "anya-e0703n25:72_0": "Pasannāmalacittena, sāsanujota natthinā.",
  "anya-e0703n25:73_0": "24.",
  "anya-e0703n25:74_0": "Raññā kataññunā tena, thūpakārāpanādito;",
  "anya-e0703n25:75_0": "Vihāra mahanantāni, pūjetuṁ ratanattayaṁ.",
  "anya-e0703n25:76_0": "25.",
  "anya-e0703n25:77_0": "Pariccattadhanāne’ttha, anagghāni vimuñciya;",
  "anya-e0703n25:78_0": "Sesāni honti ekāya, ūnavīsatikoṭiyo.",
  "anya-e0703n25:79_0": "26.",
  "anya-e0703n25:80_0": "Togā dasaddhavidha dosavidūsitāpi,",
  "anya-e0703n25:81_0": "Paññāvisesa sahitehi janehi pattā;",
  "anya-e0703n25:82_0": "Honteva pañcaguṇayoga gahitasāraṁ,",
  "anya-e0703n25:83_0": "Iccassa sāragahaṇe matimāyateyyāti.",
  "anya-e0703n25:84_0": "Sujanappasādasaṁvegatthāya kate mahāvaṁse",
  "anya-e0703n25:85_0": "Maricavaṭṭikavihāramahonāma",
  "anya-e0703n25:86_0": "Chabbīsatimo paricchedo."
}