{
  "tha-ap258:0.1_0": "Therāpadāna",
  "tha-ap258:0.2_0": "Thomakavagga",
  "tha-ap258:0.3_0": "6. Upāhanadāyakattheraapadāna",
  "tha-ap258:1.1_0": "“Ahosiṁ candano nāma,",
  "tha-ap258:1.2_0": "sambuddhassatrajo tadā;",
  "tha-ap258:1.3_0": "Ekopāhano mayā dinno,",
  "tha-ap258:1.4_0": "bodhiṁ sampajja me tuvaṁ.",
  "tha-ap258:2.1_0": "Ekanavutito kappe,",
  "tha-ap258:2.2_0": "yaṁ pānadhiṁ dadiṁ tadā;",
  "tha-ap258:2.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap258:2.4_0": "upāhanassidaṁ phalaṁ.",
  "tha-ap258:3.1_0": "Paṭisambhidā catasso,",
  "tha-ap258:3.2_0": "…pe…",
  "tha-ap258:3.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap258:4.1_0": "Itthaṁ sudaṁ āyasmā upāhanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap258:5.1_0": "Upāhanadāyakattherassāpadānaṁ chaṭṭhaṁ."
}