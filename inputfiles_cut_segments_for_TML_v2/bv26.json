{
  "bv26:0.1_0": "Buddhavaṁsa",
  "bv26:0.2_0": "26. Kassapabuddhavaṁsa",
  "bv26:1.1_0": "“Koṇāgamanassa aparena,",
  "bv26:1.2_0": "Sambuddho dvipaduttamo;",
  "bv26:1.3_0": "Kassapo nāma gottena,",
  "bv26:1.4_0": "Dhammarājā pabhaṅkaro.",
  "bv26:2.1_0": "Sañchaḍḍitaṁ kulamūlaṁ,",
  "bv26:2.2_0": "bahvannapānabhojanaṁ;",
  "bv26:2.3_0": "Datvāna yācake dānaṁ,",
  "bv26:2.4_0": "pūrayitvāna mānasaṁ;",
  "bv26:2.5_0": "Usabhova āḷakaṁ bhetvā,",
  "bv26:2.6_0": "patto sambodhimuttamaṁ.",
  "bv26:3.1_0": "Dhammacakkaṁ pavattente,",
  "bv26:3.2_0": "kassape lokanāyake;",
  "bv26:3.3_0": "Vīsakoṭisahassānaṁ,",
  "bv26:3.4_0": "paṭhamābhisamayo ahu.",
  "bv26:4.1_0": "Catumāsaṁ yadā buddho,",
  "bv26:4.2_0": "loke carati cārikaṁ;",
  "bv26:4.3_0": "Dasakoṭisahassānaṁ,",
  "bv26:4.4_0": "dutiyābhisamayo ahu.",
  "bv26:5.1_0": "Yamakaṁ vikubbanaṁ katvā,",
  "bv26:5.2_0": "ñāṇadhātuṁ pakittayi;",
  "bv26:5.3_0": "Pañcakoṭisahassānaṁ,",
  "bv26:5.4_0": "tatiyābhisamayo ahu.",
  "bv26:6.1_0": "Sudhammā devapure ramme,",
  "bv26:6.2_0": "tattha dhammaṁ pakittayi;",
  "bv26:6.3_0": "Tīṇikoṭisahassānaṁ,",
  "bv26:6.4_0": "devānaṁ bodhayī jino.",
  "bv26:7.1_0": "Naradevassa yakkhassa,",
  "bv26:7.2_0": "apare dhammadesane;",
  "bv26:7.3_0": "Etesānaṁ abhisamayā,",
  "bv26:7.4_0": "gaṇanāto asaṅkhiyā.",
  "bv26:8.1_0": "Tassāpi devadevassa,",
  "bv26:8.2_0": "eko āsi samāgamo;",
  "bv26:8.3_0": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv26:8.4_0": "santacittāna tādinaṁ.",
  "bv26:9.1_0": "Vīsabhikkhusahassānaṁ,",
  "bv26:9.2_0": "tadā āsi samāgamo;",
  "bv26:9.3_0": "Atikkantabhavantānaṁ,",
  "bv26:9.4_0": "hirisīlena tādinaṁ.",
  "bv26:10.1_0": "Ahaṁ tadā māṇavako,",
  "bv26:10.2_0": "jotipāloti vissuto;",
  "bv26:10.3_0": "Ajjhāyako mantadharo,",
  "bv26:10.4_0": "tiṇṇaṁ vedāna pāragū.",
  "bv26:11.1_0": "Lakkhaṇe itihāse ca,",
  "bv26:11.2_0": "sadhamme pāramiṁ gato;",
  "bv26:11.3_0": "Bhūmantalikkhakusalo,",
  "bv26:11.4_0": "katavijjo anāvayo.",
  "bv26:12.1_0": "Kassapassa bhagavato,",
  "bv26:12.2_0": "ghaṭīkāro nāmupaṭṭhāko;",
  "bv26:12.3_0": "Sagāravo sappatisso,",
  "bv26:12.4_0": "nibbuto tatiye phale.",
  "bv26:13.1_0": "Ādāya maṁ ghaṭīkāro,",
  "bv26:13.2_0": "upagañchi kassapaṁ jinaṁ;",
  "bv26:13.3_0": "Tassa dhammaṁ suṇitvāna,",
  "bv26:13.4_0": "pabbajiṁ tassa santike.",
  "bv26:14.1_0": "Āraddhavīriyo hutvā,",
  "bv26:14.2_0": "vattāvattesu kovido;",
  "bv26:14.3_0": "Na kvaci parihāyāmi,",
  "bv26:14.4_0": "pūresiṁ jinasāsanaṁ.",
  "bv26:15.1_0": "Yāvatā buddhabhaṇitaṁ,",
  "bv26:15.2_0": "navaṅgaṁ jinasāsanaṁ;",
  "bv26:15.3_0": "Sabbaṁ pariyāpuṇitvāna,",
  "bv26:15.4_0": "sobhayiṁ jinasāsanaṁ.",
  "bv26:16.1_0": "Mama acchariyaṁ disvā,",
  "bv26:16.2_0": "sopi buddho viyākari;",
  "bv26:16.3_0": "‘Imamhi bhaddake kappe,",
  "bv26:16.4_0": "ayaṁ buddho bhavissati.",
  "bv26:17.1_0": "Ahu kapilavhayā rammā,",
  "bv26:17.2_0": "nikkhamitvā tathāgato;",
  "bv26:17.3_0": "Padhānaṁ padahitvāna,",
  "bv26:17.4_0": "katvā dukkarakārikaṁ.",
  "bv26:18.1_0": "Ajapālarukkhamūle,",
  "bv26:18.2_0": "nisīditvā tathāgato;",
  "bv26:18.3_0": "Tattha pāyāsaṁ paggayha,",
  "bv26:18.4_0": "nerañjaramupehiti.",
  "bv26:19.1_0": "Nerañjarāya tīramhi,",
  "bv26:19.2_0": "pāyāsaṁ paribhuñjiya;",
  "bv26:19.3_0": "Paṭiyattavaramaggena,",
  "bv26:19.4_0": "bodhimūlamupehiti.",
  "bv26:20.1_0": "Tato padakkhiṇaṁ katvā,",
  "bv26:20.2_0": "bodhimaṇḍaṁ anuttaro;",
  "bv26:20.3_0": "Aparājitaṭṭhānamhi,",
  "bv26:20.4_0": "bodhipallaṅkamuttame;",
  "bv26:20.5_0": "Pallaṅkena nisīditvā,",
  "bv26:20.6_0": "bujjhissati mahāyaso.",
  "bv26:21.1_0": "Imassa janikā mātā,",
  "bv26:21.2_0": "māyā nāma bhavissati;",
  "bv26:21.3_0": "Pitā suddhodano nāma,",
  "bv26:21.4_0": "ayaṁ hessati gotamo.",
  "bv26:22.1_0": "Anāsavā vītarāgā,",
  "bv26:22.2_0": "santacittā samāhitā;",
  "bv26:22.3_0": "Kolito upatisso ca,",
  "bv26:22.4_0": "aggā hessanti sāvakā;",
  "bv26:22.5_0": "Ānando nāmupaṭṭhāko,",
  "bv26:22.6_0": "upaṭṭhissatimaṁ jinaṁ.",
  "bv26:23.1_0": "Khemā uppalavaṇṇā ca,",
  "bv26:23.2_0": "aggā hessanti sāvikā;",
  "bv26:23.3_0": "Anāsavā santacittā,",
  "bv26:23.4_0": "vītarāgā samāhitā;",
  "bv26:23.5_0": "Bodhi tassa bhagavato,",
  "bv26:23.6_0": "assatthoti pavuccati.",
  "bv26:24.1_0": "Citto hatthāḷavako ca,",
  "bv26:24.2_0": "aggā hessantupaṭṭhakā;",
  "bv26:24.3_0": "Nandamātā ca uttarā,",
  "bv26:24.4_0": "aggā hessantupaṭṭhikā’.",
  "bv26:25.1_0": "Idaṁ sutvāna vacanaṁ,",
  "bv26:25.2_0": "assamassa mahesino;",
  "bv26:25.3_0": "Āmoditā naramarū,",
  "bv26:25.4_0": "buddhabījaṁ kira ayaṁ.",
  "bv26:26.1_0": "Ukkuṭṭhisaddā pavattanti,",
  "bv26:26.2_0": "apphoṭenti hasanti ca;",
  "bv26:26.3_0": "Katañjalī namassanti,",
  "bv26:26.4_0": "dasasahassī sadevakā.",
  "bv26:27.1_0": "‘Yadimassa lokanāthassa,",
  "bv26:27.2_0": "virajjhissāma sāsanaṁ;",
  "bv26:27.3_0": "Anāgatamhi addhāne,",
  "bv26:27.4_0": "hessāma sammukhā imaṁ.",
  "bv26:28.1_0": "Yathā manussā nadiṁ tarantā,",
  "bv26:28.2_0": "Paṭititthaṁ virajjhiya;",
  "bv26:28.3_0": "Heṭṭhā titthe gahetvāna,",
  "bv26:28.4_0": "Uttaranti mahānadiṁ.",
  "bv26:29.1_0": "Evamevaṁ mayaṁ sabbe,",
  "bv26:29.2_0": "yadi muñcāmimaṁ jinaṁ;",
  "bv26:29.3_0": "Anāgatamhi addhāne,",
  "bv26:29.4_0": "hessāma sammukhā imaṁ’.",
  "bv26:30.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv26:30.2_0": "bhiyyo cittaṁ pasādayiṁ;",
  "bv26:30.3_0": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv26:30.4_0": "dasapāramipūriyā.",
  "bv26:31.1_0": "Evamahaṁ saṁsaritvā,",
  "bv26:31.2_0": "parivajjento anācaraṁ;",
  "bv26:31.3_0": "Dukkarañca kataṁ mayhaṁ,",
  "bv26:31.4_0": "bodhiyāyeva kāraṇā.",
  "bv26:32.1_0": "Nagaraṁ bārāṇasī nāma,",
  "bv26:32.2_0": "kikī nāmāsi khattiyo;",
  "bv26:32.3_0": "Vasate tattha nagare,",
  "bv26:32.4_0": "sambuddhassa mahākulaṁ.",
  "bv26:33.1_0": "Brāhmaṇo brahmadattova,",
  "bv26:33.2_0": "āsi buddhassa so pitā;",
  "bv26:33.3_0": "Dhanavatī nāma janikā,",
  "bv26:33.4_0": "kassapassa mahesino.",
  "bv26:34.1_0": "Duve vassasahassāni,",
  "bv26:34.2_0": "agāraṁ ajjha so vasi;",
  "bv26:34.3_0": "Haṁso yaso sirinando,",
  "bv26:34.4_0": "tayo pāsādamuttamā.",
  "bv26:35.1_0": "Tisoḷasasahassāni,",
  "bv26:35.2_0": "Nāriyo samalaṅkatā;",
  "bv26:35.3_0": "Sunandā nāma sā nārī,",
  "bv26:35.4_0": "Vijitaseno nāma atrajo.",
  "bv26:36.1_0": "Nimitte caturo disvā,",
  "bv26:36.2_0": "pāsādenābhinikkhami;",
  "bv26:36.3_0": "Sattāhaṁ padhānacāraṁ,",
  "bv26:36.4_0": "acarī purisuttamo.",
  "bv26:37.1_0": "Brahmunā yācito santo,",
  "bv26:37.2_0": "kassapo lokanāyako;",
  "bv26:37.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv26:37.4_0": "migadāye naruttamo.",
  "bv26:38.1_0": "Tisso ca bhāradvājo ca,",
  "bv26:38.2_0": "ahesuṁ aggasāvakā;",
  "bv26:38.3_0": "Sabbamitto nāmupaṭṭhāko,",
  "bv26:38.4_0": "kassapassa mahesino.",
  "bv26:39.1_0": "Anuḷā uruvelā ca,",
  "bv26:39.2_0": "ahesuṁ aggasāvikā;",
  "bv26:39.3_0": "Bodhi tassa bhagavato,",
  "bv26:39.4_0": "nigrodhoti pavuccati.",
  "bv26:40.1_0": "Sumaṅgalo ghaṭikāro ca,",
  "bv26:40.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv26:40.3_0": "Vicitasenā bhaddā ca,",
  "bv26:40.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv26:41.1_0": "Uccattanena so buddho,",
  "bv26:41.2_0": "vīsatiratanuggato;",
  "bv26:41.3_0": "Vijjulaṭṭhīva ākāse,",
  "bv26:41.4_0": "candova gahapūrito.",
  "bv26:42.1_0": "Vīsativassasahassāni,",
  "bv26:42.2_0": "āyu tassa mahesino;",
  "bv26:42.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv26:42.4_0": "tāresi janataṁ bahuṁ.",
  "bv26:43.1_0": "Dhammataḷākaṁ māpayitvā,",
  "bv26:43.2_0": "sīlaṁ datvā vilepanaṁ;",
  "bv26:43.3_0": "Dhammadussaṁ nivāsetvā,",
  "bv26:43.4_0": "dhammamālaṁ vibhajjiya.",
  "bv26:44.1_0": "Dhammavimalamādāsaṁ,",
  "bv26:44.2_0": "ṭhapayitvā mahājane;",
  "bv26:44.3_0": "Keci nibbānaṁ patthentā,",
  "bv26:44.4_0": "passantu me alaṅkaraṁ.",
  "bv26:45.1_0": "Sīlakañcukaṁ datvāna,",
  "bv26:45.2_0": "jhānakavacavammitaṁ;",
  "bv26:45.3_0": "Dhammacammaṁ pārupitvā,",
  "bv26:45.4_0": "datvā sannāhamuttamaṁ.",
  "bv26:46.1_0": "Satiphalakaṁ datvāna,",
  "bv26:46.2_0": "tikhiṇañāṇakuntimaṁ;",
  "bv26:46.3_0": "Dhammakhaggavaraṁ datvā,",
  "bv26:46.4_0": "sīlasaṁsaggamaddanaṁ.",
  "bv26:47.1_0": "Tevijjābhūsanaṁ datvāna,",
  "bv26:47.2_0": "āveḷaṁ caturo phale;",
  "bv26:47.3_0": "Chaḷabhiññābharaṇaṁ datvā,",
  "bv26:47.4_0": "dhammapupphapiḷandhanaṁ.",
  "bv26:48.1_0": "Saddhammapaṇḍaracchattaṁ,",
  "bv26:48.2_0": "datvā pāpanivāraṇaṁ;",
  "bv26:48.3_0": "Māpayitvābhayaṁ pupphaṁ,",
  "bv26:48.4_0": "nibbuto so sasāvako.",
  "bv26:49.1_0": "Eso hi sammāsambuddho,",
  "bv26:49.2_0": "appameyyo durāsado;",
  "bv26:49.3_0": "Eso hi dhammaratano,",
  "bv26:49.4_0": "svākkhāto ehipassiko.",
  "bv26:50.1_0": "Eso hi saṅgharatano,",
  "bv26:50.2_0": "suppaṭipanno anuttaro;",
  "bv26:50.3_0": "Sabbaṁ tamantarahitaṁ,",
  "bv26:50.4_0": "nanu rittā sabbasaṅkhārā.",
  "bv26:51.1_0": "Mahākassapo jino satthā,",
  "bv26:51.2_0": "Setabyārāmamhi nibbuto;",
  "bv26:51.3_0": "Tatthevassa jinathūpo,",
  "bv26:51.4_0": "Yojanubbedhamuggato”ti.",
  "bv26:52.1_0": "Kassapassa bhagavato vaṁso catuvīsatimo."
}