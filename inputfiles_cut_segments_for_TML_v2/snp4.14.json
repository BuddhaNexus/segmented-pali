{
  "snp4.14:0.1_0": "Sutta Nipāta 4.14",
  "snp4.14:0.2_0": "Tuvaṭakasutta",
  "snp4.14:1.1_0": "“Pucchāmi taṁ ādiccabandhu,",
  "snp4.14:1.2_0": "Vivekaṁ santipadañca mahesi;",
  "snp4.14:1.3_0": "Kathaṁ disvā nibbāti bhikkhu,",
  "snp4.14:1.4_0": "Anupādiyāno lokasmiṁ kiñci”.",
  "snp4.14:2.1_0": "“Mūlaṁ papañcasaṅkhāya,",
  "snp4.14:2.2_0": "(iti bhagavā)",
  "snp4.14:2.3_0": "Mantā asmīti sabbamuparundhe;",
  "snp4.14:2.4_0": "Yā kāci taṇhā ajjhattaṁ,",
  "snp4.14:2.5_0": "Tāsaṁ vinayā sadā sato sikkhe.",
  "snp4.14:3.1_0": "Yaṁ kiñci dhammamabhijaññā,",
  "snp4.14:3.2_0": "Ajjhattaṁ atha vāpi bahiddhā;",
  "snp4.14:3.3_0": "Na tena thāmaṁ kubbetha,",
  "snp4.14:3.4_0": "Na hi sā nibbuti sataṁ vuttā.",
  "snp4.14:4.1_0": "Seyyo na tena maññeyya,",
  "snp4.14:4.2_0": "Nīceyyo atha vāpi sarikkho;",
  "snp4.14:4.3_0": "Phuṭṭho anekarūpehi,",
  "snp4.14:4.4_0": "Nātumānaṁ vikappayaṁ tiṭṭhe.",
  "snp4.14:5.1_0": "Ajjhattamevupasame,",
  "snp4.14:5.2_0": "Na aññato bhikkhu santimeseyya;",
  "snp4.14:5.3_0": "Ajjhattaṁ upasantassa,",
  "snp4.14:5.4_0": "Natthi attā kuto nirattā vā.",
  "snp4.14:6.1_0": "Majjhe yathā samuddassa,",
  "snp4.14:6.2_0": "Ūmi no jāyatī ṭhito hoti;",
  "snp4.14:6.3_0": "Evaṁ ṭhito anejassa,",
  "snp4.14:6.4_0": "Ussadaṁ bhikkhu na kareyya kuhiñci”.",
  "snp4.14:7.1_0": "“Akittayī vivaṭacakkhu,",
  "snp4.14:7.2_0": "Sakkhidhammaṁ parissayavinayaṁ;",
  "snp4.14:7.3_0": "Paṭipadaṁ vadehi bhaddante,",
  "snp4.14:7.4_0": "Pātimokkhaṁ atha vāpi samādhiṁ”.",
  "snp4.14:8.1_0": "“Cakkhūhi neva lolassa,",
  "snp4.14:8.2_0": "Gāmakathāya āvaraye sotaṁ;",
  "snp4.14:8.3_0": "Rase ca nānugijjheyya,",
  "snp4.14:8.4_0": "Na ca mamāyetha kiñci lokasmiṁ.",
  "snp4.14:9.1_0": "Phassena yadā phuṭṭhassa,",
  "snp4.14:9.2_0": "Paridevaṁ bhikkhu na kareyya kuhiñci;",
  "snp4.14:9.3_0": "Bhavañca nābhijappeyya,",
  "snp4.14:9.4_0": "Bheravesu ca na sampavedheyya.",
  "snp4.14:10.1_0": "Annānamatho pānānaṁ,",
  "snp4.14:10.2_0": "Khādanīyānaṁ athopi vatthānaṁ;",
  "snp4.14:10.3_0": "Laddhā na sannidhiṁ kayirā,",
  "snp4.14:10.4_0": "Na ca parittase tāni alabhamāno.",
  "snp4.14:11.1_0": "Jhāyī na pādalolassa,",
  "snp4.14:11.2_0": "Virame kukkuccā nappamajjeyya;",
  "snp4.14:11.3_0": "Athāsanesu sayanesu,",
  "snp4.14:11.4_0": "Appasaddesu bhikkhu vihareyya.",
  "snp4.14:12.1_0": "Niddaṁ na bahulīkareyya,",
  "snp4.14:12.2_0": "Jāgariyaṁ bhajeyya ātāpī;",
  "snp4.14:12.3_0": "Tandiṁ māyaṁ hassaṁ khiḍḍaṁ,",
  "snp4.14:12.4_0": "Methunaṁ vippajahe savibhūsaṁ.",
  "snp4.14:13.1_0": "Āthabbaṇaṁ supinaṁ lakkhaṇaṁ,",
  "snp4.14:13.2_0": "No vidahe athopi nakkhattaṁ;",
  "snp4.14:13.3_0": "Virutañca gabbhakaraṇaṁ,",
  "snp4.14:13.4_0": "Tikicchaṁ māmako na seveyya.",
  "snp4.14:14.1_0": "Nindāya nappavedheyya,",
  "snp4.14:14.2_0": "Na uṇṇameyya pasaṁsito bhikkhu;",
  "snp4.14:14.3_0": "Lobhaṁ saha macchariyena,",
  "snp4.14:14.4_0": "Kodhaṁ pesuṇiyañca panudeyya.",
  "snp4.14:15.1_0": "Kayavikkaye na tiṭṭheyya,",
  "snp4.14:15.2_0": "Upavādaṁ bhikkhu na kareyya kuhiñci;",
  "snp4.14:15.3_0": "Gāme ca nābhisajjeyya,",
  "snp4.14:15.4_0": "Lābhakamyā janaṁ na lapayeyya.",
  "snp4.14:16.1_0": "Na ca katthitā siyā bhikkhu,",
  "snp4.14:16.2_0": "Na ca vācaṁ payuttaṁ bhāseyya;",
  "snp4.14:16.3_0": "Pāgabbhiyaṁ na sikkheyya,",
  "snp4.14:16.4_0": "Kathaṁ viggāhikaṁ na kathayeyya.",
  "snp4.14:17.1_0": "Mosavajje na nīyetha,",
  "snp4.14:17.2_0": "Sampajāno saṭhāni na kayirā;",
  "snp4.14:17.3_0": "Atha jīvitena paññāya,",
  "snp4.14:17.4_0": "Sīlabbatena nāññamatimaññe.",
  "snp4.14:18.1_0": "Sutvā rusito bahuṁ vācaṁ,",
  "snp4.14:18.2_0": "Samaṇānaṁ vā puthujanānaṁ;",
  "snp4.14:18.3_0": "Pharusena ne na paṭivajjā,",
  "snp4.14:18.4_0": "Na hi santo paṭisenikaronti.",
  "snp4.14:19.1_0": "Etañca dhammamaññāya,",
  "snp4.14:19.2_0": "Vicinaṁ bhikkhu sadā sato sikkhe;",
  "snp4.14:19.3_0": "Santīti nibbutiṁ ñatvā,",
  "snp4.14:19.4_0": "Sāsane gotamassa na pamajjeyya.",
  "snp4.14:20.1_0": "Abhibhū hi so anabhibhūto,",
  "snp4.14:20.2_0": "Sakkhidhammamanītihamadassī;",
  "snp4.14:20.3_0": "Tasmā hi tassa bhagavato sāsane,",
  "snp4.14:20.4_0": "Appamatto sadā namassamanusikkhe”ti.",
  "snp4.14:20.5_0": "Tuvaṭakasuttaṁ cuddasamaṁ."
}