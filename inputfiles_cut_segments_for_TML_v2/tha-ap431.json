{
  "tha-ap431:0.1_0": "Therāpadāna",
  "tha-ap431:0.2_0": "Sakiṁsammajjakavagga",
  "tha-ap431:0.3_0": "9 Sovaṇṇakiṅkaṇiyattheraapadāna",
  "tha-ap431:1.1_0": "“Saddhāya abhinikkhamma,",
  "tha-ap431:1.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap431:1.3_0": "Vākacīradharo āsiṁ,",
  "tha-ap431:1.4_0": "tapokammamapassito.",
  "tha-ap431:2.1_0": "Atthadassī tu bhagavā,",
  "tha-ap431:2.2_0": "lokajeṭṭho narāsabho;",
  "tha-ap431:2.3_0": "Uppajji tamhi samaye,",
  "tha-ap431:2.4_0": "tārayanto mahājanaṁ.",
  "tha-ap431:3.1_0": "Balañca vata me khīṇaṁ,",
  "tha-ap431:3.2_0": "byādhinā paramena taṁ;",
  "tha-ap431:3.3_0": "Buddhaseṭṭhaṁ saritvāna,",
  "tha-ap431:3.4_0": "puline thūpamuttamaṁ.",
  "tha-ap431:4.1_0": "Karitvā haṭṭhacittohaṁ,",
  "tha-ap431:4.2_0": "sahatthena samokiriṁ;",
  "tha-ap431:4.3_0": "Soṇṇakiṅkaṇipupphāni,",
  "tha-ap431:4.4_0": "udaggamanaso ahaṁ.",
  "tha-ap431:5.1_0": "Sammukhā viya sambuddhaṁ,",
  "tha-ap431:5.2_0": "thūpaṁ paricariṁ ahaṁ;",
  "tha-ap431:5.3_0": "Tena cetopasādena,",
  "tha-ap431:5.4_0": "atthadassissa tādino.",
  "tha-ap431:6.1_0": "Devalokaṁ gato santo,",
  "tha-ap431:6.2_0": "labhāmi vipulaṁ sukhaṁ;",
  "tha-ap431:6.3_0": "Suvaṇṇavaṇṇo tatthāsiṁ,",
  "tha-ap431:6.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap431:7.1_0": "Asītikoṭiyo mayhaṁ,",
  "tha-ap431:7.2_0": "nāriyo samalaṅkatā;",
  "tha-ap431:7.3_0": "Sadā mayhaṁ upaṭṭhanti,",
  "tha-ap431:7.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap431:8.1_0": "Saṭṭhituriyasahassāni,",
  "tha-ap431:8.2_0": "bheriyo paṇavāni ca;",
  "tha-ap431:8.3_0": "Saṅkhā ca ḍiṇḍimā tattha,",
  "tha-ap431:8.4_0": "vaggū vajjanti dundubhī.",
  "tha-ap431:9.1_0": "Cullāsītisahassāni,",
  "tha-ap431:9.2_0": "hatthino samalaṅkatā;",
  "tha-ap431:9.3_0": "Tidhāpabhinnamātaṅgā,",
  "tha-ap431:9.4_0": "kuñjarā saṭṭhihāyanā.",
  "tha-ap431:10.1_0": "Hemajālābhisañchannā,",
  "tha-ap431:10.2_0": "upaṭṭhānaṁ karonti me;",
  "tha-ap431:10.3_0": "Balakāye gaje ceva,",
  "tha-ap431:10.4_0": "ūnatā me na vijjati.",
  "tha-ap431:11.1_0": "Soṇṇakiṅkaṇipupphānaṁ,",
  "tha-ap431:11.2_0": "vipākaṁ anubhomahaṁ;",
  "tha-ap431:11.3_0": "Aṭṭhapaññāsakkhattuñca,",
  "tha-ap431:11.4_0": "devarajjamakārayiṁ.",
  "tha-ap431:12.1_0": "Ekasattatikkhattuñca,",
  "tha-ap431:12.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap431:12.3_0": "Pathabyā rajjaṁ ekasataṁ,",
  "tha-ap431:12.4_0": "mahiyā kārayiṁ ahaṁ.",
  "tha-ap431:13.1_0": "So dāni amataṁ patto,",
  "tha-ap431:13.2_0": "asaṅkhataṁ sududdasaṁ;",
  "tha-ap431:13.3_0": "Saṁyojanaparikkhīṇo,",
  "tha-ap431:13.4_0": "natthi dāni punabbhavo.",
  "tha-ap431:14.1_0": "Aṭṭhārase kappasate,",
  "tha-ap431:14.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap431:14.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap431:14.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap431:15.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap431:15.2_0": "…pe…",
  "tha-ap431:15.3_0": "viharāmi anāsavo.",
  "tha-ap431:16.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap431:16.2_0": "…pe…",
  "tha-ap431:16.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap431:17.1_0": "Paṭisambhidā catasso,",
  "tha-ap431:17.2_0": "…pe…",
  "tha-ap431:17.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap431:18.1_0": "Itthaṁ sudaṁ āyasmā sovaṇṇakiṅkaṇiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap431:19.1_0": "Sovaṇṇakiṅkaṇiyattherassāpadānaṁ navamaṁ."
}