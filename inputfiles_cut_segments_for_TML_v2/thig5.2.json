{
  "thig5.2:0.1_0": "Therīgāthā",
  "thig5.2:0.2_0": "Pañcakanipāta",
  "thig5.2:0.3_0": "2. Vimalātherīgāthā",
  "thig5.2:1.1_0": "“Mattā vaṇṇena rūpena,",
  "thig5.2:1.2_0": "sobhaggena yasena ca;",
  "thig5.2:1.3_0": "Yobbanena cupatthaddhā,",
  "thig5.2:1.4_0": "aññāsamatimaññihaṁ.",
  "thig5.2:2.1_0": "Vibhūsetvā imaṁ kāyaṁ,",
  "thig5.2:2.2_0": "sucittaṁ bālalāpanaṁ;",
  "thig5.2:2.3_0": "Aṭṭhāsiṁ vesidvāramhi,",
  "thig5.2:2.4_0": "luddo pāsamivoḍḍiya.",
  "thig5.2:3.1_0": "Piḷandhanaṁ vidaṁsentī,",
  "thig5.2:3.2_0": "guyhaṁ pakāsikaṁ bahuṁ;",
  "thig5.2:3.3_0": "Akāsiṁ vividhaṁ māyaṁ,",
  "thig5.2:3.4_0": "ujjagghantī bahuṁ janaṁ.",
  "thig5.2:4.1_0": "Sājja piṇḍaṁ caritvāna,",
  "thig5.2:4.2_0": "muṇḍā saṅghāṭipārutā;",
  "thig5.2:4.3_0": "Nisinnā rukkhamūlamhi,",
  "thig5.2:4.4_0": "avitakkassa lābhinī.",
  "thig5.2:5.1_0": "Sabbe yogā samucchinnā,",
  "thig5.2:5.2_0": "ye dibbā ye ca mānusā;",
  "thig5.2:5.3_0": "Khepetvā āsave sabbe,",
  "thig5.2:5.4_0": "sītibhūtāmhi nibbutā”ti.",
  "thig5.2:6.1_0": "… Vimalā purāṇagaṇikā therī …."
}