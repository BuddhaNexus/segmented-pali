{
  "bv3:0.1_0": "Buddhavaṁsa",
  "bv3:0.2_0": "3. Dīpaṅkarabuddhavaṁsa",
  "bv3:1.1_0": "“Tadā te bhojayitvāna,",
  "bv3:1.2_0": "sasaṅghaṁ lokanāyakaṁ;",
  "bv3:1.3_0": "Upagacchuṁ saraṇaṁ tassa,",
  "bv3:1.4_0": "dīpaṅkarassa satthuno.",
  "bv3:2.1_0": "Saraṇāgamane kañci,",
  "bv3:2.2_0": "nivesesi tathāgato;",
  "bv3:2.3_0": "Kañci pañcasu sīlesu,",
  "bv3:2.4_0": "sīle dasavidhe paraṁ.",
  "bv3:3.1_0": "Kassaci deti sāmaññaṁ,",
  "bv3:3.2_0": "caturo phalamuttame;",
  "bv3:3.3_0": "Kassaci asame dhamme,",
  "bv3:3.4_0": "deti so paṭisambhidā.",
  "bv3:4.1_0": "Kassaci varasamāpattiyo,",
  "bv3:4.2_0": "Aṭṭha deti narāsabho;",
  "bv3:4.3_0": "Tisso kassaci vijjāyo,",
  "bv3:4.4_0": "Chaḷabhiññā pavecchati.",
  "bv3:5.1_0": "Tena yogena janakāyaṁ,",
  "bv3:5.2_0": "ovadati mahāmuni;",
  "bv3:5.3_0": "Tena vitthārikaṁ āsi,",
  "bv3:5.4_0": "lokanāthassa sāsanaṁ.",
  "bv3:6.1_0": "Mahāhanusabhakkhandho,",
  "bv3:6.2_0": "dīpaṅkarassa nāmako;",
  "bv3:6.3_0": "Bahū jane tārayati,",
  "bv3:6.4_0": "parimoceti duggatiṁ.",
  "bv3:7.1_0": "Bodhaneyyaṁ janaṁ disvā,",
  "bv3:7.2_0": "satasahassepi yojane;",
  "bv3:7.3_0": "Khaṇena upagantvāna,",
  "bv3:7.4_0": "bodheti taṁ mahāmuni.",
  "bv3:8.1_0": "Paṭhamābhisamaye buddho,",
  "bv3:8.2_0": "koṭisatamabodhayi;",
  "bv3:8.3_0": "Dutiyābhisamaye nātho,",
  "bv3:8.4_0": "navutikoṭimabodhayi.",
  "bv3:9.1_0": "Yadā ca devabhavanamhi,",
  "bv3:9.2_0": "buddho dhammamadesayi;",
  "bv3:9.3_0": "Navutikoṭisahassānaṁ,",
  "bv3:9.4_0": "tatiyābhisamayo ahu.",
  "bv3:10.1_0": "Sannipātā tayo āsuṁ,",
  "bv3:10.2_0": "dīpaṅkarassa satthuno;",
  "bv3:10.3_0": "Koṭisatasahassānaṁ,",
  "bv3:10.4_0": "paṭhamo āsi samāgamo.",
  "bv3:11.1_0": "Puna nāradakūṭamhi,",
  "bv3:11.2_0": "pavivekagate jine;",
  "bv3:11.3_0": "Khīṇāsavā vītamalā,",
  "bv3:11.4_0": "samiṁsu satakoṭiyo.",
  "bv3:12.1_0": "Yamhi kāle mahāvīro,",
  "bv3:12.2_0": "sudassanasiluccaye;",
  "bv3:12.3_0": "Navakoṭisahassehi,",
  "bv3:12.4_0": "pavāresi mahāmuni.",
  "bv3:13.1_0": "Dasavīsasahassānaṁ,",
  "bv3:13.2_0": "dhammābhisamayo ahu;",
  "bv3:13.3_0": "Ekadvinnaṁ abhisamayā,",
  "bv3:13.4_0": "gaṇanāto asaṅkhiyā.",
  "bv3:14.1_0": "Vitthārikaṁ bāhujaññaṁ,",
  "bv3:14.2_0": "iddhaṁ phītaṁ ahū tadā;",
  "bv3:14.3_0": "Dīpaṅkarassa bhagavato,",
  "bv3:14.4_0": "sāsanaṁ suvisodhitaṁ.",
  "bv3:15.1_0": "Cattāri satasahassāni,",
  "bv3:15.2_0": "chaḷabhiññā mahiddhikā;",
  "bv3:15.3_0": "Dīpaṅkaraṁ lokaviduṁ,",
  "bv3:15.4_0": "parivārenti sabbadā.",
  "bv3:16.1_0": "Ye keci tena samayena,",
  "bv3:16.2_0": "jahanti mānusaṁ bhavaṁ;",
  "bv3:16.3_0": "Apattamānasā sekhā,",
  "bv3:16.4_0": "garahitā bhavanti te.",
  "bv3:17.1_0": "Supupphitaṁ pāvacanaṁ,",
  "bv3:17.2_0": "arahantehi tādihi;",
  "bv3:17.3_0": "Khīṇāsavehi vimalehi,",
  "bv3:17.4_0": "upasobhati sabbadā.",
  "bv3:18.1_0": "Nagaraṁ rammavatī nāma,",
  "bv3:18.2_0": "sudevo nāma khattiyo;",
  "bv3:18.3_0": "Sumedhā nāma janikā,",
  "bv3:18.4_0": "dīpaṅkarassa satthuno.",
  "bv3:19.1_0": "Dasavassasahassāni,",
  "bv3:19.2_0": "agāraṁ ajjha so vasi;",
  "bv3:19.3_0": "Haṁsā koñcā mayūrā ca,",
  "bv3:19.4_0": "tayo pāsādamuttamā.",
  "bv3:20.1_0": "Tīṇi satasahassāni,",
  "bv3:20.2_0": "nāriyo samalaṅkatā;",
  "bv3:20.3_0": "Padumā nāma sā nārī,",
  "bv3:20.4_0": "usabhakkhandho atrajo.",
  "bv3:21.1_0": "Nimitte caturo disvā,",
  "bv3:21.2_0": "hatthiyānena nikkhami;",
  "bv3:21.3_0": "Anūnadasamāsāni,",
  "bv3:21.4_0": "padhāne padahī jino.",
  "bv3:22.1_0": "Padhānacāraṁ caritvāna,",
  "bv3:22.2_0": "abujjhi mānasaṁ muni;",
  "bv3:22.3_0": "Brahmunā yācito santo,",
  "bv3:22.4_0": "dīpaṅkaro mahāmuni.",
  "bv3:23.1_0": "Vatti cakkaṁ mahāvīro,",
  "bv3:23.2_0": "nandārāme sirīghare;",
  "bv3:23.3_0": "Nisinno sirīsamūlamhi,",
  "bv3:23.4_0": "akā titthiyamaddanaṁ.",
  "bv3:24.1_0": "Sumaṅgalo ca tisso ca,",
  "bv3:24.2_0": "ahesuṁ aggasāvakā;",
  "bv3:24.3_0": "Sāgato nāmupaṭṭhāko,",
  "bv3:24.4_0": "dīpaṅkarassa satthuno.",
  "bv3:25.1_0": "Nandā ceva sunandā ca,",
  "bv3:25.2_0": "ahesuṁ aggasāvikā;",
  "bv3:25.3_0": "Bodhi tassa bhagavato,",
  "bv3:25.4_0": "pipphalīti pavuccati.",
  "bv3:26.1_0": "Tapussabhallikā nāma,",
  "bv3:26.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv3:26.3_0": "Sirimā koṇā upaṭṭhikā,",
  "bv3:26.4_0": "dīpaṅkarassa satthuno.",
  "bv3:27.1_0": "Asītihatthamubbedho,",
  "bv3:27.2_0": "dīpaṅkaro mahāmuni;",
  "bv3:27.3_0": "Sobhati dīparukkhova,",
  "bv3:27.4_0": "sālarājāva phullito.",
  "bv3:28.1_0": "Satasahassavassāni,",
  "bv3:28.2_0": "āyu tassa mahesino;",
  "bv3:28.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv3:28.4_0": "tāresi janataṁ bahuṁ.",
  "bv3:29.1_0": "Jotayitvāna saddhammaṁ,",
  "bv3:29.2_0": "santāretvā mahājanaṁ;",
  "bv3:29.3_0": "Jalitvā aggikkhandhova,",
  "bv3:29.4_0": "nibbuto so sasāvako.",
  "bv3:30.1_0": "Sā ca iddhi so ca yaso,",
  "bv3:30.2_0": "Tāni ca pādesu cakkaratanāni;",
  "bv3:30.3_0": "Sabbaṁ tamantarahitaṁ,",
  "bv3:30.4_0": "Nanu rittā sabbasaṅkhārā.",
  "bv3:31.1_0": "Dīpaṅkaro jino satthā,",
  "bv3:31.2_0": "Nandārāmamhi nibbuto;",
  "bv3:31.3_0": "Tatthevassa jinathūpo,",
  "bv3:31.4_0": "Chattiṁsubbedhayojano”ti.",
  "bv3:32.1_0": "Dīpaṅkarassa bhagavato vaṁso paṭhamo."
}