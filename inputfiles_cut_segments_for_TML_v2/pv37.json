{
  "pv37:0.1_0": "Petavatthu",
  "pv37:0.2_0": "Mahāvagga",
  "pv37:0.3_0": "2. Serīsakapetavatthu",
  "pv37:1.1_0": "“Suṇotha yakkhassa vāṇijāna ca,",
  "pv37:1.2_0": "Samāgamo yattha tadā ahosi;",
  "pv37:1.3_0": "Yathā kathaṁ itaritarena cāpi,",
  "pv37:1.4_0": "Subhāsitaṁ tañca suṇātha sabbe.",
  "pv37:2.1_0": "Yo so ahu rājā pāyāsi nāma,",
  "pv37:2.2_0": "Bhummānaṁ sahabyagato yasassī;",
  "pv37:2.3_0": "So modamānova sake vimāne,",
  "pv37:2.4_0": "Amānuso mānuse ajjhabhāsī”ti.",
  "pv37:3.1_0": "“Vaṅke araññe amanussaṭṭhāne,",
  "pv37:3.2_0": "Kantāre appodake appabhakkhe;",
  "pv37:3.3_0": "Suduggame vaṇṇupathassa majjhe,",
  "pv37:3.4_0": "Vaṅkambhayā naṭṭhamanā manussā.",
  "pv37:4.1_0": "Nayidha phalā mūlamayā ca santi,",
  "pv37:4.2_0": "Upādānaṁ natthi kutodha bhakkho;",
  "pv37:4.3_0": "Aññatra paṁsūhi ca vālukāhi ca,",
  "pv37:4.4_0": "Tatāhi uṇhāhi ca dāruṇāhi ca.",
  "pv37:5.1_0": "Ujjaṅgalaṁ tattamivaṁ kapālaṁ,",
  "pv37:5.2_0": "Anāyasaṁ paralokena tulyaṁ;",
  "pv37:5.3_0": "Luddānamāvāsamidaṁ purāṇaṁ,",
  "pv37:5.4_0": "Bhūmippadeso abhisattarūpo.",
  "pv37:6.1_0": "Atha tumhe kena vaṇṇena,",
  "pv37:6.2_0": "Kimāsamānā imaṁ padesaṁ hi;",
  "pv37:6.3_0": "Anupaviṭṭhā sahasā samacca,",
  "pv37:6.4_0": "Lobhā bhayā atha vā sampamūḷhā”ti.",
  "pv37:7.1_0": "“Magadhesu aṅgesu ca satthavāhā,",
  "pv37:7.2_0": "Āropayitvā paṇiyaṁ puthuttaṁ;",
  "pv37:7.3_0": "Te yāmase sindhusovīrabhūmiṁ,",
  "pv37:7.4_0": "Dhanatthikā uddayaṁ patthayānā.",
  "pv37:8.1_0": "Divā pipāsaṁ nadhivāsayantā,",
  "pv37:8.2_0": "Yoggānukampañca samekkhamānā;",
  "pv37:8.3_0": "Etena vegena āyāma sabbe,",
  "pv37:8.4_0": "Rattiṁ maggaṁ paṭipannā vikāle.",
  "pv37:9.1_0": "Te duppayātā aparaddhamaggā,",
  "pv37:9.2_0": "Andhākulā vippanaṭṭhā araññe;",
  "pv37:9.3_0": "Suduggame vaṇṇupathassa majjhe,",
  "pv37:9.4_0": "Disaṁ na jānāma pamūḷhacittā.",
  "pv37:10.1_0": "Idañca disvāna adiṭṭhapubbaṁ,",
  "pv37:10.2_0": "Vimānaseṭṭhañca tavañca yakkha;",
  "pv37:10.3_0": "Tatuttariṁ jīvitamāsamānā,",
  "pv37:10.4_0": "Disvā patītā sumanā udaggā”ti.",
  "pv37:11.1_0": "“Pāraṁ samuddassa imañca vaṇṇuṁ,",
  "pv37:11.2_0": "Vettācaraṁ saṅkupathañca maggaṁ;",
  "pv37:11.3_0": "Nadiyo pana pabbatānañca duggā,",
  "pv37:11.4_0": "Puthuddisā gacchatha bhogahetu.",
  "pv37:12.1_0": "Pakkhandiyāna vijitaṁ paresaṁ,",
  "pv37:12.2_0": "Verajjake mānuse pekkhamānā;",
  "pv37:12.3_0": "Yaṁ vo sutaṁ vā atha vāpi diṭṭhaṁ,",
  "pv37:12.4_0": "Accherakaṁ taṁ vo suṇoma tātā”ti.",
  "pv37:13.1_0": "“Itopi accherataraṁ kumāra,",
  "pv37:13.2_0": "Na no sutaṁ vā atha vāpi diṭṭhaṁ;",
  "pv37:13.3_0": "Atītamānussakameva sabbaṁ,",
  "pv37:13.4_0": "Disvā na tappāma anomavaṇṇaṁ.",
  "pv37:14.1_0": "Vehāyasaṁ pokkharañño savanti,",
  "pv37:14.2_0": "Pahūtamalyā bahupuṇḍarīkā;",
  "pv37:14.3_0": "Dumā cime niccaphalūpapannā,",
  "pv37:14.4_0": "Atīva gandhā surabhiṁ pavāyanti.",
  "pv37:15.1_0": "Veḷūriyathambhā satamussitāse,",
  "pv37:15.2_0": "Silāpavāḷassa ca āyataṁsā;",
  "pv37:15.3_0": "Masāragallā sahalohitaṅgā,",
  "pv37:15.4_0": "Thambhā ime jotirasāmayāse.",
  "pv37:16.1_0": "Sahassathambhaṁ atulānubhāvaṁ,",
  "pv37:16.2_0": "Tesūpari sādhumidaṁ vimānaṁ;",
  "pv37:16.3_0": "Ratanantaraṁ kañcanavedimissaṁ,",
  "pv37:16.4_0": "Tapanīyapaṭṭehi ca sādhuchannaṁ.",
  "pv37:17.1_0": "Jambonaduttattamidaṁ sumaṭṭho,",
  "pv37:17.2_0": "Pāsādasopānaphalūpapanno;",
  "pv37:17.3_0": "Daḷho ca vaggu ca susaṅgato ca,",
  "pv37:17.4_0": "Atīva nijjhānakhamo manuñño.",
  "pv37:18.1_0": "Ratanantarasmiṁ bahuannapānaṁ,",
  "pv37:18.2_0": "Parivārito accharāsaṅgaṇena;",
  "pv37:18.3_0": "Murajaālambaratūriyaghuṭṭho,",
  "pv37:18.4_0": "Abhivanditosi thutivandanāya.",
  "pv37:19.1_0": "So modasi nārigaṇappabodhano,",
  "pv37:19.2_0": "Vimānapāsādavare manorame;",
  "pv37:19.3_0": "Acintiyo sabbaguṇūpapanno,",
  "pv37:19.4_0": "Rājā yathā vessavaṇo naḷinyā.",
  "pv37:20.1_0": "Devo nu āsi udavāsi yakkho,",
  "pv37:20.2_0": "Udāhu devindo manussabhūto;",
  "pv37:20.3_0": "Pucchanti taṁ vāṇijā satthavāhā,",
  "pv37:20.4_0": "Ācikkha ko nāma tuvaṁsi yakkho”ti.",
  "pv37:21.1_0": "“Serīsako nāma ahamhi yakkho,",
  "pv37:21.2_0": "Kantāriyo vaṇṇupathamhi gutto;",
  "pv37:21.3_0": "Imaṁ padesaṁ abhipālayāmi,",
  "pv37:21.4_0": "Vacanakaro vessavaṇassa rañño”ti.",
  "pv37:22.1_0": "“Adhiccaladdhaṁ pariṇāmajaṁ te,",
  "pv37:22.2_0": "Sayaṅkataṁ udāhu devehi dinnaṁ;",
  "pv37:22.3_0": "Pucchanti taṁ vāṇijā satthavāhā,",
  "pv37:22.4_0": "Kathaṁ tayā laddhamidaṁ manuññan”ti.",
  "pv37:23.1_0": "“Nādhiccaladdhaṁ na pariṇāmajaṁ me,",
  "pv37:23.2_0": "Na sayaṅkataṁ na hi devehi dinnaṁ;",
  "pv37:23.3_0": "Sakehi kammehi apāpakehi,",
  "pv37:23.4_0": "Puññehi me laddhamidaṁ manuññan”ti.",
  "pv37:24.1_0": "“Kiṁ te vataṁ kiṁ pana brahmacariyaṁ,",
  "pv37:24.2_0": "Kissa suciṇṇassa ayaṁ vipāko;",
  "pv37:24.3_0": "Pucchanti taṁ vāṇijā satthavāhā,",
  "pv37:24.4_0": "Kathaṁ tayā laddhamidaṁ vimānan”ti.",
  "pv37:25.1_0": "“Mamaṁ pāyāsīti ahu samaññā,",
  "pv37:25.2_0": "Rajjaṁ yadā kārayiṁ kosalānaṁ;",
  "pv37:25.3_0": "Natthikadiṭṭhi kadariyo pāpadhammo,",
  "pv37:25.4_0": "Ucchedavādī ca tadā ahosiṁ.",
  "pv37:26.1_0": "Samaṇo ca kho āsi kumārakassapo,",
  "pv37:26.2_0": "Bahussuto cittakathī uḷāro;",
  "pv37:26.3_0": "So me tadā dhammakathaṁ abhāsi,",
  "pv37:26.4_0": "Diṭṭhivisūkāni vinodayī me.",
  "pv37:27.1_0": "Tāhaṁ tassa dhammakathaṁ suṇitvā,",
  "pv37:27.2_0": "Upāsakattaṁ paṭivedayissaṁ;",
  "pv37:27.3_0": "Pāṇātipātā virato ahosiṁ,",
  "pv37:27.4_0": "Loke adinnaṁ parivajjayissaṁ;",
  "pv37:27.5_0": "Amajjapo no ca musā abhāṇiṁ,",
  "pv37:27.6_0": "Sakena dārena ca ahosi tuṭṭho.",
  "pv37:28.1_0": "Taṁ me vataṁ taṁ pana brahmacariyaṁ,",
  "pv37:28.2_0": "Tassa suciṇṇassa ayaṁ vipāko;",
  "pv37:28.3_0": "Teheva kammehi apāpakehi,",
  "pv37:28.4_0": "Puññehi me laddhamidaṁ vimānan”ti.",
  "pv37:29.1_0": "“Saccaṁ kirāhaṁsu narā sapaññā,",
  "pv37:29.2_0": "Anaññathā vacanaṁ paṇḍitānaṁ;",
  "pv37:29.3_0": "Yahiṁ yahiṁ gacchati puññakammo,",
  "pv37:29.4_0": "Tahiṁ tahiṁ modati kāmakāmī.",
  "pv37:30.1_0": "Yahiṁ yahiṁ sokapariddavo ca,",
  "pv37:30.2_0": "Vadho ca bandho ca parikkileso;",
  "pv37:30.3_0": "Tahiṁ tahiṁ gacchati pāpakammo,",
  "pv37:30.4_0": "Na muccati duggatiyā kadācī”ti.",
  "pv37:31.1_0": "“Sammūḷharūpova jano ahosi,",
  "pv37:31.2_0": "Asmiṁ muhutte kalalīkatova;",
  "pv37:31.3_0": "Janassimassa tuyhañca kumāra,",
  "pv37:31.4_0": "Appaccayo kena nu kho ahosī”ti.",
  "pv37:32.1_0": "“Ime ca sirīsavanā tātā,",
  "pv37:32.2_0": "Dibbā gandhā surabhī sampavanti;",
  "pv37:32.3_0": "Te sampavāyanti imaṁ vimānaṁ,",
  "pv37:32.4_0": "Divā ca ratto ca tamaṁ nihantvā.",
  "pv37:33.1_0": "Imesañca kho vassasataccayena,",
  "pv37:33.2_0": "Sipāṭikā phalati ekamekā;",
  "pv37:33.3_0": "Mānussakaṁ vassasataṁ atītaṁ,",
  "pv37:33.4_0": "Yadagge kāyamhi idhūpapanno.",
  "pv37:34.1_0": "Disvānahaṁ vassasatāni pañca,",
  "pv37:34.2_0": "Asmiṁ vimāne ṭhatvāna tātā;",
  "pv37:34.3_0": "Āyukkhayā puññakkhayā cavissaṁ,",
  "pv37:34.4_0": "Teneva sokena pamucchitosmī”ti.",
  "pv37:35.1_0": "“Kathaṁ nu soceyya tathāvidho so,",
  "pv37:35.2_0": "Laddhā vimānaṁ atulaṁ cirāya;",
  "pv37:35.3_0": "Ye cāpi kho ittaramupapannā,",
  "pv37:35.4_0": "Te nūna soceyyuṁ parittapuññā”ti.",
  "pv37:36.1_0": "“Anucchaviṁ ovadiyañca me taṁ,",
  "pv37:36.2_0": "Yaṁ maṁ tumhe peyyavācaṁ vadetha;",
  "pv37:36.3_0": "Tumhe ca kho tātā mayānuguttā,",
  "pv37:36.4_0": "Yenicchakaṁ tena paletha sotthin”ti.",
  "pv37:37.1_0": "“Gantvā mayaṁ sindhusovīrabhūmiṁ,",
  "pv37:37.2_0": "Dhanatthikā uddayaṁ patthayānā;",
  "pv37:37.3_0": "Yathāpayogā paripuṇṇacāgā,",
  "pv37:37.4_0": "Kāhāma serīsamahaṁ uḷāran”ti.",
  "pv37:38.1_0": "“Mā ceva serīsamahaṁ akattha,",
  "pv37:38.2_0": "Sabbañca vo bhavissati yaṁ vadetha;",
  "pv37:38.3_0": "Pāpāni kammāni vivajjayātha,",
  "pv37:38.4_0": "Dhammānuyogañca adhiṭṭhahātha.",
  "pv37:39.1_0": "Upāsako atthi imamhi saṅghe,",
  "pv37:39.2_0": "Bahussuto sīlavatūpapanno;",
  "pv37:39.3_0": "Saddho ca cāgī ca supesalo ca,",
  "pv37:39.4_0": "Vicakkhaṇo santusito mutīmā.",
  "pv37:40.1_0": "Sañjānamāno na musā bhaṇeyya,",
  "pv37:40.2_0": "Parūpaghātāya na cetayeyya;",
  "pv37:40.3_0": "Vebhūtikaṁ pesuṇaṁ no kareyya,",
  "pv37:40.4_0": "Saṇhañca vācaṁ sakhilaṁ bhaṇeyya.",
  "pv37:41.1_0": "Sagāravo sappatisso vinīto,",
  "pv37:41.2_0": "Apāpako adhisīle visuddho;",
  "pv37:41.3_0": "So mātaraṁ pitarañcāpi jantu,",
  "pv37:41.4_0": "Dhammena poseti ariyavutti.",
  "pv37:42.1_0": "Maññe so mātāpitūnaṁ kāraṇā,",
  "pv37:42.2_0": "Bhogāni pariyesati na attahetu;",
  "pv37:42.3_0": "Mātāpitūnañca yo accayena,",
  "pv37:42.4_0": "Nekkhammapoṇo carissati brahmacariyaṁ.",
  "pv37:43.1_0": "Ujū avaṅko asaṭho amāyo,",
  "pv37:43.2_0": "Na lesakappena ca vohareyya;",
  "pv37:43.3_0": "So tādiso sukatakammakārī,",
  "pv37:43.4_0": "Dhamme ṭhito kinti labhetha dukkhaṁ.",
  "pv37:44.1_0": "Taṁ kāraṇā pātukatomhi attanā,",
  "pv37:44.2_0": "Tasmā dhammaṁ passatha vāṇijāse;",
  "pv37:44.3_0": "Aññatra teniha bhasmī bhavetha,",
  "pv37:44.4_0": "Andhākulā vippanaṭṭhā araññe;",
  "pv37:44.5_0": "Taṁ khippamānena lahuṁ parena,",
  "pv37:44.6_0": "Sukho have sappurisena saṅgamo”ti.",
  "pv37:45.1_0": "“Kiṁ nāma so kiñca karoti kammaṁ,",
  "pv37:45.2_0": "Kiṁ nāmadheyyaṁ kiṁ pana tassa gottaṁ;",
  "pv37:45.3_0": "Mayampi naṁ daṭṭhukāmamha yakkha,",
  "pv37:45.4_0": "Yassānukampāya idhāgatosi;",
  "pv37:45.5_0": "Lābhā hi tassa yassa tuvaṁ pihesī”ti.",
  "pv37:46.1_0": "“Yo kappako sambhavanāmadheyyo,",
  "pv37:46.2_0": "Upāsako kocchaphalūpajīvī;",
  "pv37:46.3_0": "Jānātha naṁ tumhākaṁ pesiyo so,",
  "pv37:46.4_0": "Mā kho naṁ hīḷittha supesalo so”ti.",
  "pv37:47.1_0": "“Jānāmase yaṁ tvaṁ pavadesi yakkha,",
  "pv37:47.2_0": "Na kho naṁ jānāma sa edisoti;",
  "pv37:47.3_0": "Mayampi naṁ pūjayissāma yakkha,",
  "pv37:47.4_0": "Sutvāna tuyhaṁ vacanaṁ uḷāran”ti.",
  "pv37:48.1_0": "“Ye keci imasmiṁ satthe manussā,",
  "pv37:48.2_0": "Daharā mahantā athavāpi majjhimā;",
  "pv37:48.3_0": "Sabbeva te ālambantu vimānaṁ,",
  "pv37:48.4_0": "Passantu puññānaṁ phalaṁ kadariyā”ti.",
  "pv37:49.1_0": "Te tattha sabbeva “ahaṁ pure”ti,",
  "pv37:49.2_0": "Taṁ kappakaṁ tattha purakkhatvā;",
  "pv37:49.3_0": "Sabbeva te ālambiṁsu vimānaṁ,",
  "pv37:49.4_0": "Masakkasāraṁ viya vāsavassa.",
  "pv37:50.1_0": "Te tattha sabbeva “ahaṁ pure”ti,",
  "pv37:50.2_0": "Upāsakattaṁ paṭivedayiṁsu;",
  "pv37:50.3_0": "Pāṇātipātā paṭiviratā ahesuṁ,",
  "pv37:50.4_0": "Loke adinnaṁ parivajjayiṁsu;",
  "pv37:50.5_0": "Amajjapā no ca musā bhaṇiṁsu,",
  "pv37:50.6_0": "Sakena dārena ca ahesuṁ tuṭṭhā.",
  "pv37:51.1_0": "Te tattha sabbeva “ahaṁ pure”ti,",
  "pv37:51.2_0": "Upāsakattaṁ paṭivedayitvā;",
  "pv37:51.3_0": "Pakkāmi sattho anumodamāno,",
  "pv37:51.4_0": "Yakkhiddhiyā anumato punappunaṁ.",
  "pv37:52.1_0": "Gantvāna te sindhusovīrabhūmiṁ,",
  "pv37:52.2_0": "Dhanatthikā uddayaṁ patthayānā;",
  "pv37:52.3_0": "Yathāpayogā paripuṇṇalābhā,",
  "pv37:52.4_0": "Paccāgamuṁ pāṭaliputtamakkhataṁ.",
  "pv37:53.1_0": "Gantvāna te saṅgharaṁ sotthivanto,",
  "pv37:53.2_0": "Puttehi dārehi samaṅgibhūtā;",
  "pv37:53.3_0": "Ānandī vittā sumanā patītā,",
  "pv37:53.4_0": "Akaṁsu serīsamahaṁ uḷāraṁ;",
  "pv37:53.5_0": "Serīsakaṁ te pariveṇaṁ māpayiṁsu.",
  "pv37:54.1_0": "Etādisā sappurisāna sevanā,",
  "pv37:54.2_0": "Mahatthikā dhammaguṇāna sevanā;",
  "pv37:54.3_0": "Ekassa atthāya upāsakassa,",
  "pv37:54.4_0": "Sabbeva sattā sukhitā ahesunti.",
  "pv37:55.1_0": "Serīsakapetavatthu dutiyaṁ.",
  "pv37:55.2_0": "Bhāṇavāraṁ tatiyaṁ."
}