{
  "thag1.77:0.1_0": "Theragāthā",
  "thag1.77:0.2_0": "Ekakanipāta",
  "thag1.77:0.3_0": "Aṭṭhamavagga",
  "thag1.77:0.4_0": "1.77. Hatthārohaputtattheragāthā",
  "thag1.77:1.1_0": "“Idaṁ pure cittamacāri cārikaṁ,",
  "thag1.77:1.2_0": "Yenicchakaṁ yatthakāmaṁ yathāsukhaṁ;",
  "thag1.77:1.3_0": "Tadajjahaṁ niggahessāmi yoniso,",
  "thag1.77:1.4_0": "Hatthippabhinnaṁ viya aṅkusaggaho”ti.",
  "thag1.77:1.5_0": "… Hatthārohaputto thero …."
}