{
  "vv47:0.1_0": "Vimānavatthu",
  "vv47:0.2_0": "Itthivimāna",
  "vv47:0.3_0": "Mañjiṭṭhakavagga",
  "vv47:0.4_0": "9. Pītavimānavatthu",
  "vv47:1.1_0": "“Pītavatthe pītadhaje,",
  "vv47:1.2_0": "pītālaṅkārabhūsite;",
  "vv47:1.3_0": "Pītacandanalittaṅge,",
  "vv47:1.4_0": "pītauppalamālinī.",
  "vv47:2.1_0": "Pītapāsādasayane,",
  "vv47:2.2_0": "pītāsane pītabhājane;",
  "vv47:2.3_0": "Pītachatte pītarathe,",
  "vv47:2.4_0": "pītasse pītabījane.",
  "vv47:3.1_0": "Kiṁ kammamakarī bhadde,",
  "vv47:3.2_0": "pubbe mānusake bhave;",
  "vv47:3.3_0": "Devate pucchitācikkha,",
  "vv47:3.4_0": "kissa kammassidaṁ phalan”ti.",
  "vv47:4.1_0": "“Kosātakī nāma latatthi bhante,",
  "vv47:4.2_0": "Tittikā anabhicchitā;",
  "vv47:4.3_0": "Tassā cattāri pupphāni,",
  "vv47:4.4_0": "Thūpaṁ abhihariṁ ahaṁ.",
  "vv47:5.1_0": "Satthu sarīramuddissa,",
  "vv47:5.2_0": "vippasannena cetasā;",
  "vv47:5.3_0": "Nāssa maggaṁ avekkhissaṁ,",
  "vv47:5.4_0": "na taggamanasā satī.",
  "vv47:6.1_0": "Tato maṁ avadhī gāvī,",
  "vv47:6.2_0": "thūpaṁ apattamānasaṁ;",
  "vv47:6.3_0": "Tañcāhaṁ abhisañceyyaṁ,",
  "vv47:6.4_0": "bhiyyo nūna ito siyā.",
  "vv47:7.1_0": "Tena kammena devinda,",
  "vv47:7.2_0": "maghavā devakuñjara;",
  "vv47:7.3_0": "Pahāya mānusaṁ dehaṁ,",
  "vv47:7.4_0": "tava sahabyamāgatā”ti.",
  "vv47:8.1_0": "Idaṁ sutvā tidasādhipati,",
  "vv47:8.2_0": "Maghavā devakuñjaro;",
  "vv47:8.3_0": "Tāvatiṁse pasādento,",
  "vv47:8.4_0": "Mātaliṁ etadabravi.",
  "vv47:9.1_0": "“Passa mātali accheraṁ,",
  "vv47:9.2_0": "cittaṁ kammaphalaṁ idaṁ;",
  "vv47:9.3_0": "Appakampi kataṁ deyyaṁ,",
  "vv47:9.4_0": "puññaṁ hoti mahapphalaṁ.",
  "vv47:10.1_0": "Natthi citte pasannamhi,",
  "vv47:10.2_0": "appakā nāma dakkhiṇā;",
  "vv47:10.3_0": "Tathāgate vā sambuddhe,",
  "vv47:10.4_0": "atha vā tassa sāvake.",
  "vv47:11.1_0": "Ehi mātali amhepi,",
  "vv47:11.2_0": "bhiyyo bhiyyo mahemase;",
  "vv47:11.3_0": "Tathāgatassa dhātuyo,",
  "vv47:11.4_0": "sukho puññāna muccayo.",
  "vv47:12.1_0": "Tiṭṭhante nibbute cāpi,",
  "vv47:12.2_0": "same citte samaṁ phalaṁ;",
  "vv47:12.3_0": "Cetopaṇidhihetu hi,",
  "vv47:12.4_0": "sattā gacchanti suggatiṁ.",
  "vv47:13.1_0": "Bahūnaṁ vata atthāya,",
  "vv47:13.2_0": "uppajjanti tathāgatā;",
  "vv47:13.3_0": "Yattha kāraṁ karitvāna,",
  "vv47:13.4_0": "saggaṁ gacchanti dāyakā”ti.",
  "vv47:14.1_0": "Pītavimānaṁ navamaṁ."
}