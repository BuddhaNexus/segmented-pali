{
  "tha-ap403:0.1_0": "Therāpadāna",
  "tha-ap403:0.2_0": "Metteyyavagga",
  "tha-ap403:0.3_0": "1. Tissametteyyattheraapadāna",
  "tha-ap403:1.1_0": "“Pabbhārakūṭaṁ nissāya,",
  "tha-ap403:1.2_0": "sobhito nāma tāpaso;",
  "tha-ap403:1.3_0": "Pavattaphalaṁ bhuñjitvā,",
  "tha-ap403:1.4_0": "vasati pabbatantare.",
  "tha-ap403:2.1_0": "Aggiṁ dāruṁ āharitvā,",
  "tha-ap403:2.2_0": "ujjālesiṁ ahaṁ tadā;",
  "tha-ap403:2.3_0": "Uttamatthaṁ gavesanto,",
  "tha-ap403:2.4_0": "brahmalokūpapattiyā.",
  "tha-ap403:3.1_0": "Padumuttaro lokavidū,",
  "tha-ap403:3.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap403:3.3_0": "Mamuddharitukāmo so,",
  "tha-ap403:3.4_0": "āgacchi mama santike.",
  "tha-ap403:4.1_0": "‘Kiṁ karosi mahāpuñña,",
  "tha-ap403:4.2_0": "dehi me aggidārukaṁ;",
  "tha-ap403:4.3_0": "Ahamaggiṁ paricare,",
  "tha-ap403:4.4_0": "tato me suddhi hohiti’.",
  "tha-ap403:5.1_0": "‘Subhaddako tvaṁ manuje,",
  "tha-ap403:5.2_0": "devate tvaṁ pajānasi;",
  "tha-ap403:5.3_0": "Tuvaṁ aggiṁ paricara,",
  "tha-ap403:5.4_0": "handa te aggidārukaṁ’.",
  "tha-ap403:6.1_0": "Tato kaṭṭhaṁ gahetvāna,",
  "tha-ap403:6.2_0": "aggiṁ ujjālayī jino;",
  "tha-ap403:6.3_0": "Na tattha kaṭṭhaṁ pajjhāyi,",
  "tha-ap403:6.4_0": "pāṭiheraṁ mahesino.",
  "tha-ap403:7.1_0": "‘Na te aggi pajjalati,",
  "tha-ap403:7.2_0": "āhutī te na vijjati;",
  "tha-ap403:7.3_0": "Niratthakaṁ vataṁ tuyhaṁ,",
  "tha-ap403:7.4_0": "aggiṁ paricarassu me’.",
  "tha-ap403:8.1_0": "‘Kīdiso so mahāvīra,",
  "tha-ap403:8.2_0": "aggi tava pavuccati;",
  "tha-ap403:8.3_0": "Mayhampi kathayassetaṁ,",
  "tha-ap403:8.4_0": "ubho paricarāmase’.",
  "tha-ap403:9.1_0": "‘Hetudhammanirodhāya,",
  "tha-ap403:9.2_0": "kilesasamaṇāya ca;",
  "tha-ap403:9.3_0": "Issāmacchariyaṁ hitvā,",
  "tha-ap403:9.4_0": "tayo ete mamāhutī’.",
  "tha-ap403:10.1_0": "‘Kīdiso tvaṁ mahāvīra,",
  "tha-ap403:10.2_0": "kathaṁ gottosi mārisa;",
  "tha-ap403:10.3_0": "Ācārapaṭipatti te,",
  "tha-ap403:10.4_0": "bāḷhaṁ kho mama ruccati’.",
  "tha-ap403:11.1_0": "‘Khattiyamhi kule jāto,",
  "tha-ap403:11.2_0": "abhiññāpāramiṁ gato;",
  "tha-ap403:11.3_0": "Sabbāsavaparikkhīṇo,",
  "tha-ap403:11.4_0": "natthi dāni punabbhavo’.",
  "tha-ap403:12.1_0": "‘Yadi buddhosi sabbaññū,",
  "tha-ap403:12.2_0": "pabhaṅkara tamonuda;",
  "tha-ap403:12.3_0": "Namassissāmi taṁ deva,",
  "tha-ap403:12.4_0": "dukkhassantakaro tuvaṁ’.",
  "tha-ap403:13.1_0": "Pattharitvājinacammaṁ,",
  "tha-ap403:13.2_0": "nisīdanamadāsahaṁ;",
  "tha-ap403:13.3_0": "Nisīda nātha sabbaññu,",
  "tha-ap403:13.4_0": "upaṭṭhissāmahaṁ tuvaṁ.",
  "tha-ap403:14.1_0": "Nisīdi bhagavā tattha,",
  "tha-ap403:14.2_0": "ajinamhi suvitthate;",
  "tha-ap403:14.3_0": "Nimantayitvā sambuddhaṁ,",
  "tha-ap403:14.4_0": "pabbataṁ agamāsahaṁ.",
  "tha-ap403:15.1_0": "Khāribhārañca pūretvā,",
  "tha-ap403:15.2_0": "tindukaphalamāhariṁ;",
  "tha-ap403:15.3_0": "Madhunā yojayitvāna,",
  "tha-ap403:15.4_0": "phalaṁ buddhassadāsahaṁ.",
  "tha-ap403:16.1_0": "Mama nijjhāyamānassa,",
  "tha-ap403:16.2_0": "paribhuñji tadā jino;",
  "tha-ap403:16.3_0": "Tattha cittaṁ pasādesiṁ,",
  "tha-ap403:16.4_0": "pekkhanto lokanāyakaṁ.",
  "tha-ap403:17.1_0": "Padumuttaro lokavidū,",
  "tha-ap403:17.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap403:17.3_0": "Mamassame nisīditvā,",
  "tha-ap403:17.4_0": "imā gāthā abhāsatha.",
  "tha-ap403:18.1_0": "‘Yo maṁ phalena tappesi,",
  "tha-ap403:18.2_0": "pasanno sehi pāṇibhi;",
  "tha-ap403:18.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap403:18.4_0": "suṇātha mama bhāsato.",
  "tha-ap403:19.1_0": "Pañcavīsatikkhattuṁ so,",
  "tha-ap403:19.2_0": "devarajjaṁ karissati;",
  "tha-ap403:19.3_0": "Sahassakkhattuṁ rājā ca,",
  "tha-ap403:19.4_0": "cakkavattī bhavissati.",
  "tha-ap403:20.1_0": "Tassa saṅkappamaññāya,",
  "tha-ap403:20.2_0": "pubbakammasamaṅgino;",
  "tha-ap403:20.3_0": "Annaṁ pānañca vatthañca,",
  "tha-ap403:20.4_0": "sayanañca mahārahaṁ.",
  "tha-ap403:21.1_0": "Puññakammena saṁyuttā,",
  "tha-ap403:21.2_0": "nibbattissanti tāvade;",
  "tha-ap403:21.3_0": "Sadā pamudito cāyaṁ,",
  "tha-ap403:21.4_0": "bhavissati anāmayo.",
  "tha-ap403:22.1_0": "Upapajjati yaṁ yoniṁ,",
  "tha-ap403:22.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap403:22.3_0": "Sabbattha sukhito hutvā,",
  "tha-ap403:22.4_0": "manussattaṁ gamissati.",
  "tha-ap403:23.1_0": "Ajjhāyako mantadharo,",
  "tha-ap403:23.2_0": "tiṇṇaṁ vedāna pāragū;",
  "tha-ap403:23.3_0": "Sambuddhaṁ upagantvāna,",
  "tha-ap403:23.4_0": "arahā so bhavissati’.",
  "tha-ap403:24.1_0": "Yato sarāmi attānaṁ,",
  "tha-ap403:24.2_0": "yato pattosmi viññutaṁ;",
  "tha-ap403:24.3_0": "Bhoge me ūnatā natthi,",
  "tha-ap403:24.4_0": "phaladānassidaṁ phalaṁ.",
  "tha-ap403:25.1_0": "Varadhammamanuppatto,",
  "tha-ap403:25.2_0": "rāgadose samūhaniṁ;",
  "tha-ap403:25.3_0": "Sabbāsavaparikkhīṇo,",
  "tha-ap403:25.4_0": "natthi dāni punabbhavo.",
  "tha-ap403:26.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap403:26.2_0": "bhavā sabbe samūhatā;",
  "tha-ap403:26.3_0": "Nāgova bandhanaṁ chetvā,",
  "tha-ap403:26.4_0": "viharāmi anāsavo.",
  "tha-ap403:27.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap403:27.2_0": "mama buddhassa santike;",
  "tha-ap403:27.3_0": "Tisso vijjā anuppattā,",
  "tha-ap403:27.4_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap403:28.1_0": "Paṭisambhidā catasso,",
  "tha-ap403:28.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap403:28.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap403:28.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap403:29.1_0": "Itthaṁ sudaṁ āyasmā tissametteyyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap403:30.1_0": "Tissametteyyattherassāpadānaṁ paṭhamaṁ."
}