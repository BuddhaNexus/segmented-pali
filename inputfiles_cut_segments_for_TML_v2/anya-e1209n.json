{
  "anya-e1209n:0_0": "Telakaṭāhagāthā",
  "anya-e1209n:1_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1209n:2_0": "1.",
  "anya-e1209n:3_0": "Laṁkissaro jayatu vāraṇarājagāmī",
  "anya-e1209n:4_0": "Bhogindabhoga rucirāyata pīṇa bāhu,",
  "anya-e1209n:5_0": "Sādhupacāranirato guṇasannivāso",
  "anya-e1209n:6_0": "Dhamme ṭhito vīgatakodhamadāvalepo;",
  "anya-e1209n:7_0": "2.",
  "anya-e1209n:8_0": "Yo sabbalokamahito karuṇādhivāso",
  "anya-e1209n:9_0": "Mokkhākaro ravikulambara puṇṇa cando,",
  "anya-e1209n:10_0": "Ñeyyodadhiṁ suvipulaṁ sakalaṁ vibuddho",
  "anya-e1209n:11_0": "Lokuttamaṁ namatha taṁ sirasā munindaṁ;",
  "anya-e1209n:12_0": "3.",
  "anya-e1209n:13_0": "Sopānamālamamalaṁ tidasālayassa",
  "anya-e1209n:14_0": "Saṁsāra sāgarasamuttaraṇāya setuṁ,",
  "anya-e1209n:15_0": "Sabbāgatībhaya vivajjita khema maggaṁ",
  "anya-e1209n:16_0": "Dhammaṁ namassatha sadā muninā paṇītaṁ;",
  "anya-e1209n:17_0": "4.",
  "anya-e1209n:18_0": "Deyyaṁ tadappamapi yattha pasanna cittā",
  "anya-e1209n:19_0": "Datvā narā phalamuḷārataraṁ labhante,",
  "anya-e1209n:20_0": "Taṁ sabbadā dasabalenapi suppasatthaṁ",
  "anya-e1209n:21_0": "Saṅghaṁ namassatha sadāmitapuññakhettaṁ;",
  "anya-e1209n:22_0": "5.",
  "anya-e1209n:23_0": "Tejo balena mahatā ratanattayassa",
  "anya-e1209n:24_0": "Lokattayaṁ samadhigacchati yena mokkhaṁ,",
  "anya-e1209n:25_0": "Rakkhā na catthi ca samā ratanattayassa",
  "anya-e1209n:26_0": "Tasmā sadā bhajatha taṁ ratanattayaṁ bho;",
  "anya-e1209n:27_0": "6.",
  "anya-e1209n:28_0": "Laṁkissaro parahitekarato nirāso",
  "anya-e1209n:29_0": "Rattimpi jāgararato karuṇādhivāso,",
  "anya-e1209n:30_0": "Lokaṁ vibodhayati lokahitāya kāmaṁ",
  "anya-e1209n:31_0": "Dhammaṁ samācaratha jāgariyānuyuttā;",
  "anya-e1209n:32_0": "7.",
  "anya-e1209n:33_0": "Sattopakāra niratā kusale sahāyā",
  "anya-e1209n:34_0": "Bho dullabhā bhuvi narā vihatappamādā,",
  "anya-e1209n:35_0": "Laṁkādhipaṁ guṇadhanaṁ kusale sahāyaṁ",
  "anya-e1209n:36_0": "Āgamma saṁcaratha dhammamalaṁ pamādaṁ;",
  "anya-e1209n:37_0": "8.",
  "anya-e1209n:38_0": "Dhammo tiloka saraṇo paramo rasānaṁ",
  "anya-e1209n:39_0": "Dhammo mahaggharatano ratanesu loke,",
  "anya-e1209n:40_0": "Dhammo bhave tibhavadukkha vināsahetu",
  "anya-e1209n:41_0": "Dhammaṁ samācaratha jāgariyānuyuttā;",
  "anya-e1209n:42_0": "9.",
  "anya-e1209n:43_0": "Niddaṁ vinodayatha bhāvayathappameyyaṁ",
  "anya-e1209n:44_0": "Dukkhaṁ aniccampi ceha anattatañca,",
  "anya-e1209n:45_0": "Dehe ratiṁ jahatha ja jajjarabhājanābho",
  "anya-e1209n:46_0": "Dhammaṁ samācaratha jāgariyānuyuttā;",
  "anya-e1209n:47_0": "10.",
  "anya-e1209n:48_0": "Okāsa majja mama natthi suve karissaṁ",
  "anya-e1209n:49_0": "Dhammaṁ itīhalasatā kusalappayoge,",
  "anya-e1209n:50_0": "Nā’laṁ tiyaddhasu tathā bhuvanattaye ca",
  "anya-e1209n:51_0": "Kāmaṁ na catthi manujo maraṇā pamutto;",
  "anya-e1209n:52_0": "11.",
  "anya-e1209n:53_0": "Khitto yathā nabhasi kenacideva leḍḍu",
  "anya-e1209n:54_0": "Bhūmiṁ samāpatti bhāratayā khaṇena,",
  "anya-e1209n:55_0": "Jātattameva khalu kāraṇamekamatra",
  "anya-e1209n:56_0": "Lokaṁ sadā nanu dhuvaṁ maraṇāya gantuṁ;",
  "anya-e1209n:57_0": "12.",
  "anya-e1209n:58_0": "Kāmaṁ narassa patato girimuddhanāto",
  "anya-e1209n:59_0": "Majjhe na kiñci bhayanissaraṇāya hetu,",
  "anya-e1209n:60_0": "Kāmaṁ vajanti maraṇaṁ tibhavesu sattā",
  "anya-e1209n:61_0": "Bhoge ratiṁ pajahathāpi ca jīvite ca;",
  "anya-e1209n:62_0": "13.",
  "anya-e1209n:63_0": "Kāmaṁ patanti mahiyā khalu vassadhārā",
  "anya-e1209n:64_0": "Vijjullatā vitatamegha mukhā pamuttā,",
  "anya-e1209n:65_0": "Evaṁ narā maraṇabhīma papātamajjhe",
  "anya-e1209n:66_0": "Kāmaṁ patanti nahi koci bhavesu nicco;",
  "anya-e1209n:67_0": "14.",
  "anya-e1209n:68_0": "Velātaṭe paṭutaroru taraṁgamālā",
  "anya-e1209n:69_0": "Nāsaṁ vajanti satataṁ salilālayassa,",
  "anya-e1209n:70_0": "Nāsaṁ tathā samupayanti narāmarānaṁ",
  "anya-e1209n:71_0": "Pāṇāni dāruṇatare maraṇodadhimhi;",
  "anya-e1209n:72_0": "15.",
  "anya-e1209n:73_0": "Ruddhopi so rathavarassagajādhipehi",
  "anya-e1209n:74_0": "Yodhehi cāpi sabalehi ca sāyudhehi,",
  "anya-e1209n:75_0": "Lokaṁ vivaṁciya sadā maraṇūsabho so",
  "anya-e1209n:76_0": "Kāmaṁ nihanti bhuvanattaya sāli daṇḍaṁ;",
  "anya-e1209n:77_0": "16.",
  "anya-e1209n:78_0": "Bho mārutena mahatā vihato padīpo",
  "anya-e1209n:79_0": "Khippaṁ vināsa mukhameti mahappabhopi,",
  "anya-e1209n:80_0": "Loke tathā maraṇacaṇḍa samīraṇena",
  "anya-e1209n:81_0": "Khippaṁ vinassati narāyumahā padīpo;",
  "anya-e1209n:82_0": "17",
  "anya-e1209n:83_0": "Rāmajjunappabhūti bhūpati puṁgavā ca",
  "anya-e1209n:84_0": "Sūrā pure raṇamukhe vijitāri saṅghā,",
  "anya-e1209n:85_0": "Tepīha caṇḍa maraṇogha nimuggadehā",
  "anya-e1209n:86_0": "Nāsaṁ gatā jagati ke maraṇā pamuttā?",
  "anya-e1209n:87_0": "18.",
  "anya-e1209n:88_0": "Lakkhī ca sāgarapaṭā sadharādharā ca",
  "anya-e1209n:89_0": "Sampattiyo ca vividhā api rūpasobhā,",
  "anya-e1209n:90_0": "Sabbā ca tā api ca mittasutā ca dārā",
  "anya-e1209n:91_0": "Ke cāpi kaṁ anugatā maraṇaṁ vajantaṁ?",
  "anya-e1209n:92_0": "19.",
  "anya-e1209n:93_0": "Brahmāsurāsuragaṇā ca mahānubhāvā",
  "anya-e1209n:94_0": "Gandhabbakinnaramahoragarakkhasā ca,",
  "anya-e1209n:95_0": "Te cā pare ca maraṇaggisikhāya sabbe",
  "anya-e1209n:96_0": "Ante patanti salabhā iva khīṇapuññā;",
  "anya-e1209n:97_0": "20.",
  "anya-e1209n:98_0": "Ye sāriputtapamukhā munisāvakā ca",
  "anya-e1209n:99_0": "Suddhā sadāsavanudā paramiddhipattā,",
  "anya-e1209n:100_0": "Te cāpi maccuvaḷabhā mukha sannimuggā",
  "anya-e1209n:101_0": "Dīpānivānalahatā khayataṁ upetā;",
  "anya-e1209n:102_0": "21.",
  "anya-e1209n:103_0": "Buddhāpi buddhakamalāmalacārunettā",
  "anya-e1209n:104_0": "Battiṁsalakkhaṇa virājita rūpasobhā,",
  "anya-e1209n:105_0": "Sabbāsacakkhayakarāpi ca lokanāthā",
  "anya-e1209n:106_0": "Sammadditā maraṇamattamahāgajena;",
  "anya-e1209n:107_0": "22.",
  "anya-e1209n:108_0": "Rogāturesu karuṇā na jarāturesu",
  "anya-e1209n:109_0": "Khiḍḍāparesu sukumārakumārakesu,",
  "anya-e1209n:110_0": "Lokaṁ sadā hanati maccu mahāgajindo",
  "anya-e1209n:111_0": "Davānalo vanamivāvarataṁ asesaṁ;",
  "anya-e1209n:112_0": "23.",
  "anya-e1209n:113_0": "Āpuṇṇatā na salile na jalāsayassa",
  "anya-e1209n:114_0": "Kaṭṭhassa cāpi bahutā na hutāsanassa,",
  "anya-e1209n:115_0": "Bhutvāna so tibhūvanampi tathā asesaṁ",
  "anya-e1209n:116_0": "Bho niddayo na khalu pītimupeti maccu;",
  "anya-e1209n:117_0": "24.",
  "anya-e1209n:118_0": "Bho moha mohitatayā vivaso adhañño",
  "anya-e1209n:119_0": "Loko patatyapipi maccumukhe subhīme,",
  "anya-e1209n:120_0": "Bhoge ratiṁ samupayāti nihīnapañño",
  "anya-e1209n:121_0": "Dolā taraṅgacapale supinopameyye;",
  "anya-e1209n:122_0": "25.",
  "anya-e1209n:123_0": "Ekopi maccurabhihantumalaṁ tilokaṁ",
  "anya-e1209n:124_0": "Kiṁ niddayā api jarāmaraṇānuyāyī,",
  "anya-e1209n:125_0": "Ko vā kareyya vibhasuvesu ca jīvitāsaṁ",
  "anya-e1209n:126_0": "Jāto naro supina saṁgama sannibhesu;",
  "anya-e1209n:127_0": "26.",
  "anya-e1209n:128_0": "Niccāturaṁ jagadidaṁ sabhayaṁ sasokaṁ",
  "anya-e1209n:129_0": "Disvā ca kodhamadamohajarābhibhūtaṁ,",
  "anya-e1209n:130_0": "Ubbegamattamapi yassa na vijjatī ce",
  "anya-e1209n:131_0": "So dāruṇona maraṇaṁ vata taṁ dhiratthu!",
  "anya-e1209n:132_0": "Bho bho na passatha jarāsidharañhi maccu",
  "anya-e1209n:133_0": "Māhaññamānamakhilaṁ satataṁ tilokaṁ,",
  "anya-e1209n:134_0": "Kiṁ niddayā nayatha vītabhayā tiyāmaṁ",
  "anya-e1209n:135_0": "Dhammaṁ sadā’savanudaṁ caratha’ppamattā;",
  "anya-e1209n:136_0": "28.",
  "anya-e1209n:137_0": "Bhāvetha bho maraṇamāravivajjanāya",
  "anya-e1209n:138_0": "Loke sadā maraṇa saññamimaṁ yatattā,",
  "anya-e1209n:139_0": "Evañhi bhāvanaratassa narassa tassa",
  "anya-e1209n:140_0": "Taṇhā pahīyati sarīragatā asesā;",
  "anya-e1209n:141_0": "29.",
  "anya-e1209n:142_0": "Rūpaṁ jarā piyataraṁ malinīkaroti",
  "anya-e1209n:143_0": "Sabbaṁ balaṁ harati attani ghorarogo,",
  "anya-e1209n:144_0": "Nānūpabhoga parirakkhita mattabhāvaṁ",
  "anya-e1209n:145_0": "Bho maccu saṁharati kiṁ phalamattabhāve?",
  "anya-e1209n:146_0": "30.",
  "anya-e1209n:147_0": "Kammānilāpahatarogataraṁgabhaṁge",
  "anya-e1209n:148_0": "Saṁsāra sāgara mukhe vitate vipannā,",
  "anya-e1209n:149_0": "Mā māpamādamakarittha karotha mokkhaṁ",
  "anya-e1209n:150_0": "Dukkhodayo nanu pamādamayaṁ narānaṁ;",
  "anya-e1209n:151_0": "31.",
  "anya-e1209n:152_0": "Bhogā ca mittasutaporisa bandhavā ca",
  "anya-e1209n:153_0": "Nārī ca jīvitasamā api khettavatthu,",
  "anya-e1209n:154_0": "Sabbāni tāni paralokamito vajantaṁ",
  "anya-e1209n:155_0": "Nānubbajanti kusalākusalaṁva loke;",
  "anya-e1209n:156_0": "32.",
  "anya-e1209n:157_0": "Bho vijjucaṁcalatare bhavasāgaramhi",
  "anya-e1209n:158_0": "Khittā purā katamahāpavanena tena,",
  "anya-e1209n:159_0": "Kāmaṁ vibhijjati khaṇena sarīranāvā",
  "anya-e1209n:160_0": "Hatthe karotha paramaṁ guṇahatthasāraṁ;",
  "anya-e1209n:161_0": "33.",
  "anya-e1209n:162_0": "Niccaṁ vibhijjatiha āmaka bhājanaṁva",
  "anya-e1209n:163_0": "Saṁrakkhitopi bahudhā iha attabhāvo,",
  "anya-e1209n:164_0": "Dhammaṁ samācaratha saggapatippatiṭṭhaṁ",
  "anya-e1209n:165_0": "Dhammo suciṇṇamihameva phalaṁ dadāti;",
  "anya-e1209n:166_0": "34.",
  "anya-e1209n:167_0": "Rantvā sadā piyatare divi devarajje",
  "anya-e1209n:168_0": "Namhā cavanti vibudhā api khīṇapuññā,",
  "anya-e1209n:169_0": "Sabbaṁ sukhaṁ divi bhuvīha viyoganiṭṭhaṁ",
  "anya-e1209n:170_0": "Ko paññavā bhavasukhesu ratiṁ kareyya?",
  "anya-e1209n:171_0": "35.",
  "anya-e1209n:172_0": "Buddho sasāvakagaṇo jagadekanātho",
  "anya-e1209n:173_0": "Tārāvalīparivutopi ca puṇṇacando,",
  "anya-e1209n:174_0": "Indopi devamakuṭaṁkita pādakañjo",
  "anya-e1209n:175_0": "Ko pheṇapiṇḍa-na-samo tibhavesu jāto?",
  "anya-e1209n:176_0": "36.",
  "anya-e1209n:177_0": "Līlāvataṁsamapi yobbana rūpasobhaṁ",
  "anya-e1209n:178_0": "Attūpamaṁ piyajanena ca sampayogaṁ,",
  "anya-e1209n:179_0": "Disvāpi vijjucapalaṁ kurute pamādaṁ",
  "anya-e1209n:180_0": "Bho mohamohitajano bhavarāgaratto;",
  "anya-e1209n:181_0": "37.",
  "anya-e1209n:182_0": "Putto pitā bhavati mātu patīha putto",
  "anya-e1209n:183_0": "Nārī kadāci jananī ca pitā ca putto,",
  "anya-e1209n:184_0": "Evaṁ sadā viparivattati jīvaloko",
  "anya-e1209n:185_0": "Citte sadāticapale khalu jātiraṅge;",
  "anya-e1209n:186_0": "38.",
  "anya-e1209n:187_0": "Rantvā pure vividhaphullalatākulehi",
  "anya-e1209n:188_0": "Devāpi nandanavane surasundarīhi,",
  "anya-e1209n:189_0": "Te ve’kadā vitatakaṇṭakasaṁkaṭesu",
  "anya-e1209n:190_0": "Bho koṭisimbalivanesu phusanti dukkhaṁ;",
  "anya-e1209n:191_0": "39.",
  "anya-e1209n:192_0": "Bhutvā sudhannamapi kañcanabhājanesu",
  "anya-e1209n:193_0": "Sagge pure suravarā paramiddhipattā,",
  "anya-e1209n:194_0": "Te cāpi pajjalitalohagulaṁ gilanti",
  "anya-e1209n:195_0": "Kāmaṁ kadāci narakālaya vāsabhūtā;",
  "anya-e1209n:196_0": "40.",
  "anya-e1209n:197_0": "Bhutvā narissaravarā ca mahiṁ asesaṁ",
  "anya-e1209n:198_0": "Devādhipā ca divi dibbasukhaṁ surammaṁ,",
  "anya-e1209n:199_0": "Vāsaṁ kadāci khurasañcitabhūtalesu",
  "anya-e1209n:200_0": "Te vā mahārathagaṇānugatā divīha;",
  "anya-e1209n:201_0": "41.",
  "anya-e1209n:202_0": "Devaṅganā lalitabhinnataraṅgamāle",
  "anya-e1209n:203_0": "Raṅge mahissarajaṭāmakuṭānuyāte,",
  "anya-e1209n:204_0": "Rantvā pure suravarā pamadāsahāyā",
  "anya-e1209n:205_0": "Te cāpi ghorataravetaraṇiṁ patanti;",
  "anya-e1209n:206_0": "42.",
  "anya-e1209n:207_0": "Phullāni pallavalatāphalasaṁkulāni",
  "anya-e1209n:208_0": "Rammāni nandanavanāni manoramāni,",
  "anya-e1209n:209_0": "Dibbaccharālalitapuṇṇadarīmukhāni",
  "anya-e1209n:210_0": "Kelāsamerusikharāni ca yanti nāsaṁ;",
  "anya-e1209n:211_0": "43.",
  "anya-e1209n:212_0": "Dolā’nilā’nalataraṁgasamā hi bhogā",
  "anya-e1209n:213_0": "Vijjuppabhāticapalāni ca jīvitāni,",
  "anya-e1209n:214_0": "Māyāmarīcijalasomasamaṁ sarīraṁ",
  "anya-e1209n:215_0": "Ko jīvite ca vibhave ca kareyya rāgaṁ?",
  "anya-e1209n:216_0": "44.",
  "anya-e1209n:217_0": "Kiṁ dukkhamatthi na bhavesu ca dāruṇesu",
  "anya-e1209n:218_0": "Sattopi tassa vividhassa na bhājano ko,",
  "anya-e1209n:219_0": "Jāto yathā maraṇarogajarābhibhūto",
  "anya-e1209n:220_0": "Ko sajjano bhavaratiṁ pihayeyya’bālo?",
  "anya-e1209n:221_0": "45.",
  "anya-e1209n:222_0": "Ke vāpi pajjalitalohagulaṁ gilanti",
  "anya-e1209n:223_0": "Sakkā kathañcidapi pāṇitalena bhīmaṁ,",
  "anya-e1209n:224_0": "Dukkhodayaṁ asucinissavanaṁ anantaṁ",
  "anya-e1209n:225_0": "Ko kāmayetha khalu dehamimaṁ abālo?",
  "anya-e1209n:226_0": "46.",
  "anya-e1209n:227_0": "Loke na maccusamamatthi bhayaṁ narānaṁ",
  "anya-e1209n:228_0": "Na vyādhidukkhasamamatthi ca kiṁci dukkhaṁ,",
  "anya-e1209n:229_0": "Evaṁ virūpakaraṇaṁ na jarāsamānaṁ",
  "anya-e1209n:230_0": "Mohena bho ratimupeti tathāpi dehe;",
  "anya-e1209n:231_0": "47.",
  "anya-e1209n:232_0": "Nissārato nalakalīkadalīsamānaṁ",
  "anya-e1209n:233_0": "Attānameva parihaññati attahetu,",
  "anya-e1209n:234_0": "Sampositopi kusahāya ivākataññū",
  "anya-e1209n:235_0": "Kāyo na yassa anugacchati kālakerā;",
  "anya-e1209n:236_0": "48.",
  "anya-e1209n:237_0": "Taṁ pheṇapiṇḍasadisaṁ visasūlakappaṁ",
  "anya-e1209n:238_0": "Toyā’nilā’nalamahīuragādhivāsaṁ,",
  "anya-e1209n:239_0": "Jiṇṇālayaṁva paridubbalamattabhāvaṁ",
  "anya-e1209n:240_0": "Disvā naro kathamupeti ratiṁ sapañño?",
  "anya-e1209n:241_0": "49.",
  "anya-e1209n:242_0": "Āyukkhayaṁ samupayāti khaṇe khaṇepi",
  "anya-e1209n:243_0": "Anveti maccu hananāya jarāsipāṇī,",
  "anya-e1209n:244_0": "Kālaṁ tathā na parivattati taṁ atītaṁ",
  "anya-e1209n:245_0": "Dukkhaṁ idaṁ nanu bhavesu acintanīyaṁ?",
  "anya-e1209n:246_0": "50.",
  "anya-e1209n:247_0": "Appāyukassa maraṇaṁ sulabhaṁ bhavesu",
  "anya-e1209n:248_0": "Dīghāyukassa ca jarā vyasanaṁ ca’nekaṁ,",
  "anya-e1209n:249_0": "Evaṁ bhave ubhayatopi ca dukkhameva",
  "anya-e1209n:250_0": "Dhammaṁ samācaratha dukkhavināsanāya;",
  "anya-e1209n:251_0": "51.",
  "anya-e1209n:252_0": "Dukkhagginā sumahatā paripīḷitesu",
  "anya-e1209n:253_0": "Lokattayassa vasato bhavavārakesu,",
  "anya-e1209n:254_0": "Sabbattatā sucaritassa pamādakālo",
  "anya-e1209n:255_0": "Bho bho na hoti paramaṁ kusalaṁ ciṇātha;",
  "anya-e1209n:256_0": "52.",
  "anya-e1209n:257_0": "Appaṁ sukhaṁ jalalavaṁ viya bho tiṇagge",
  "anya-e1209n:258_0": "Dukkhantu sāgarajalaṁ viya sabbaloke,",
  "anya-e1209n:259_0": "Saṁkappanā tadapi hoti sabhāvato hi",
  "anya-e1209n:260_0": "Sabbaṁ tilokamapi kevaladukkhameva;",
  "anya-e1209n:261_0": "53.",
  "anya-e1209n:262_0": "Kāyo na yassa anugacchati kāyahetu",
  "anya-e1209n:263_0": "Bālo anekavidhamācaratīha dukkhaṁ,",
  "anya-e1209n:264_0": "Kāyo sadā kali malākalilañhi loke",
  "anya-e1209n:265_0": "Kāye rato’navarataṁ vyasanaṁ pareti",
  "anya-e1209n:266_0": "54.",
  "anya-e1209n:267_0": "Mīḷhākaraṁ kalimalākaramāmagandhaṁ",
  "anya-e1209n:268_0": "Sūḷāsisallavisapannagarogabhūtaṁ,",
  "anya-e1209n:269_0": "Dehaṁ vipassatha jarāmaraṇādhivāsaṁ",
  "anya-e1209n:270_0": "Tucchaṁ sadā vigatasāramimaṁ vinindyaṁ;",
  "anya-e1209n:271_0": "55.",
  "anya-e1209n:272_0": "Dukkhaṁ aniccamasubhaṁ vata attabhāvaṁ",
  "anya-e1209n:273_0": "Mā saṁkilesaya na vijjati jātu nicco,",
  "anya-e1209n:274_0": "Ambho na vijjati hi appamapīha sāraṁ",
  "anya-e1209n:275_0": "Sāraṁ samācaratha dhammamalaṁ pamādaṁ;",
  "anya-e1209n:276_0": "56.",
  "anya-e1209n:277_0": "Māyāmarīcikadalīnalapheṇapuñja-",
  "anya-e1209n:278_0": "Gaṁgātaraṅgajalabubbulasannibhesu,",
  "anya-e1209n:279_0": "Khandhesu pañcasu chaḷāyatanesu tesu",
  "anya-e1209n:280_0": "Attā na vijjati hi ko na vadeyya’bālo?",
  "anya-e1209n:281_0": "57.",
  "anya-e1209n:282_0": "Vañjhāsuto sasavisāṇamaye rathe tu,",
  "anya-e1209n:283_0": "Dhāveyya ce cirataraṁ sadhuraṁ gahetvā,",
  "anya-e1209n:284_0": "Dīpaccimālamiva taṁ khaṇabhaṅgabhūtaṁ",
  "anya-e1209n:285_0": "Attāti dubbalatarantu vadeyya dehaṁ;",
  "anya-e1209n:286_0": "58.",
  "anya-e1209n:287_0": "Bālo yathā salilabubbulabhājanena",
  "anya-e1209n:288_0": "Ākaṇṭhato vata pibeyya marīcitoyaṁ,",
  "anya-e1209n:289_0": "Attāni sārarahitaṁ kadalīsamānaṁ",
  "anya-e1209n:290_0": "Mohā bhaṇeyya khalu dehamimaṁ anattaṁ;",
  "anya-e1209n:291_0": "59.",
  "anya-e1209n:292_0": "Yo’dumbarassa kusumena marīcitoyaṁ",
  "anya-e1209n:293_0": "Vāsaṁ yadicchati sa khedamupeti bālo,",
  "anya-e1209n:294_0": "Attānameva parihaññati attahetu",
  "anya-e1209n:295_0": "Attā na vijjati kadācidapīha dehe;",
  "anya-e1209n:296_0": "60.",
  "anya-e1209n:297_0": "Poso yathā hi kadalī suvinibbhujanto",
  "anya-e1209n:298_0": "Sāraṁ tadappampi nopalabheyya kāmaṁ,",
  "anya-e1209n:299_0": "Khandhesu paṁcasu chaḷāyatanesu tesu",
  "anya-e1209n:300_0": "Suññesu kiñcidapi nopalabheyya sāraṁ;",
  "anya-e1209n:301_0": "61.",
  "anya-e1209n:302_0": "Suttaṁ vinā na paṭabhāvamihatthi kiṁci",
  "anya-e1209n:303_0": "Dehaṁ vinā na khalu koci mihatthi satto,",
  "anya-e1209n:304_0": "Deho sabhāvarahito khaṇabhaṁgayutto,",
  "anya-e1209n:305_0": "Ko attahetu aparo bhuvi vijjatīha?",
  "anya-e1209n:306_0": "62.",
  "anya-e1209n:307_0": "Disvā marīcisalilañhi sudūrato bho",
  "anya-e1209n:308_0": "Bālo migo samupadhāvati toyasaññī,",
  "anya-e1209n:309_0": "Evaṁ sabhāvarahite viparītasiddhe",
  "anya-e1209n:310_0": "Dehe pareti parikappanayā hi rāgaṁ;",
  "anya-e1209n:311_0": "63.",
  "anya-e1209n:312_0": "Dehe sabhāvarahite parikappasiddhe",
  "anya-e1209n:313_0": "Attā na vijjati hi vijjumivantalikkhe,",
  "anya-e1209n:314_0": "Bhāvetha bhāvanaratā vigatappamādā",
  "anya-e1209n:315_0": "Sabbāsavappahananāya anattasaññaṁ;",
  "anya-e1209n:316_0": "64.",
  "anya-e1209n:317_0": "Lālākarīsarudhirassuvasānulittaṁ",
  "anya-e1209n:318_0": "Dehaṁ imaṁ kalimalākalilaṁ asāraṁ,",
  "anya-e1209n:319_0": "Sattā sadā pariharanti jigucchanīyaṁ",
  "anya-e1209n:320_0": "Nānāsucīhi paripuṇṇaghaṭaṁ yatheva;",
  "anya-e1209n:321_0": "65.",
  "anya-e1209n:322_0": "Ṇahātvā jalañhi sakalaṁ catusāgarassa",
  "anya-e1209n:323_0": "Meruppamāṇamapi gandhamanuttarañca,",
  "anya-e1209n:324_0": "Pappoti neva manujo hi suciṁ kadāci",
  "anya-e1209n:325_0": "Kiṁ bho vipassatha guṇaṁ kimu attabhāve?",
  "anya-e1209n:326_0": "66.",
  "anya-e1209n:327_0": "Deho sa eva vividhāsucisannidhāno",
  "anya-e1209n:328_0": "Deho sa eva vadhabandhanarogabhūto,",
  "anya-e1209n:329_0": "Deho sa eva navadhā paribhinnagaṇḍo",
  "anya-e1209n:330_0": "Dehaṁ vinā bhayakaraṁ na susānamatthi;",
  "anya-e1209n:331_0": "67.",
  "anya-e1209n:332_0": "Antogataṁ yadiva muttakarīsabhāgo",
  "anya-e1209n:333_0": "Dehā bahiṁ aticareyya vinikkhamitvā,",
  "anya-e1209n:334_0": "Mātā pitā vikaruṇā ca vinaṭṭhapemā",
  "anya-e1209n:335_0": "Kāmaṁ bhaveyyu kimu bandhusutā ca dārā?",
  "anya-e1209n:336_0": "68.",
  "anya-e1209n:337_0": "Dehaṁ yathā navamukhaṁ kimisaṅghagehaṁ",
  "anya-e1209n:338_0": "Maṁsaṭṭhisedarudhirākalilaṁ vigandhaṁ,",
  "anya-e1209n:339_0": "Posenti ye vividhapāpamihācaritvā",
  "anya-e1209n:340_0": "Te mohitā maraṇadhammamaho vatevaṁ!",
  "anya-e1209n:341_0": "69.",
  "anya-e1209n:342_0": "Gaṇḍūpame vividharoga nivāsabhūte",
  "anya-e1209n:343_0": "Kāye sadā rudhiramuttakarīsapuṇṇe,",
  "anya-e1209n:344_0": "Yo ettha nandati naro sasigālabhakkhe",
  "anya-e1209n:345_0": "Kāmañhi socati parattha sa bālabuddhi;",
  "anya-e1209n:346_0": "70.",
  "anya-e1209n:347_0": "Bho pheṇapiṇḍasadiso viya sārahīno",
  "anya-e1209n:348_0": "Mīḷhālayo viya sadā paṭikūlagandho,",
  "anya-e1209n:349_0": "Āsīvisālayanibho sabhayo sadukkho",
  "anya-e1209n:350_0": "Deho sadā savati loṇaghaṭova bhinno;",
  "anya-e1209n:351_0": "71.",
  "anya-e1209n:352_0": "Jātaṁ yathā na kamalaṁ bhuvi nindanīyaṁ",
  "anya-e1209n:353_0": "Paṅkesu bho asucitoya samākulesu,",
  "anya-e1209n:354_0": "Jātaṁ tathā parahitampi ca dehabhūtaṁ",
  "anya-e1209n:355_0": "Taṁ nindanīyamiha jātu na hoti loke;",
  "anya-e1209n:356_0": "72.",
  "anya-e1209n:357_0": "Dvattiṁsabhāgaparipūrataro viseso",
  "anya-e1209n:358_0": "Kāyo yathā hi naranāri gaṇassa loke,",
  "anya-e1209n:359_0": "Kāyesu kiṁ phalamihatthi ca paṇḍitānaṁ",
  "anya-e1209n:360_0": "Kāmaṁ tadeva nanu hoti paropakāraṁ;",
  "anya-e1209n:361_0": "73.",
  "anya-e1209n:362_0": "Posona paṇḍitatarena tathāpi deho",
  "anya-e1209n:363_0": "Sabbattanā cirataraṁ paripālanīyo,",
  "anya-e1209n:364_0": "Dhammaṁ careyya suciraṁ khalu jīvamāno",
  "anya-e1209n:365_0": "Dhamme have maṇivaro iva kāmado bho",
  "anya-e1209n:366_0": "74.",
  "anya-e1209n:367_0": "Khīre yathā suparibhāvitamosadhamhi",
  "anya-e1209n:368_0": "Snehena osadhabalaṁ paribhāsateva,",
  "anya-e1209n:369_0": "Dhammo tathā iha samācarito hi loke",
  "anya-e1209n:370_0": "Chāyāva yāti paraloka mito vajantaṁ;",
  "anya-e1209n:371_0": "75.",
  "anya-e1209n:372_0": "Kāyassa bho viracitassa yathānukūlaṁ",
  "anya-e1209n:373_0": "Chāyā vibhāti rucirāmaladappaṇe tu,",
  "anya-e1209n:374_0": "Katvā tatheva paramaṁ kusalaṁ parattha",
  "anya-e1209n:375_0": "Sambhūsitā iva bhavanti phalena tena;",
  "anya-e1209n:376_0": "76.",
  "anya-e1209n:377_0": "Dehe tathā vividhadukkha nivāsabhūte",
  "anya-e1209n:378_0": "Mohā pamādavasagā sukhasaññamūḷhā,",
  "anya-e1209n:379_0": "Tikkhe yathā khuramukhe madhulehamāno",
  "anya-e1209n:380_0": "Bāḷhañca dukkhamanugacchati hīnapañño;",
  "anya-e1209n:381_0": "77.",
  "anya-e1209n:382_0": "Saṁkapparāgavigate niratattabhāve",
  "anya-e1209n:383_0": "Dukkhaṁ sadā samadhigacchati appapañño,",
  "anya-e1209n:384_0": "Mūḷhassa ceva sukhasaññamihatthiloke",
  "anya-e1209n:385_0": "Kiṁpakkameva nanu hoti vicāramāne;",
  "anya-e1209n:386_0": "78.",
  "anya-e1209n:387_0": "Sabbopabhoga dhanadhaññavisesalābhī",
  "anya-e1209n:388_0": "Rūpena bho sa makaraddhajasannibhopi,",
  "anya-e1209n:389_0": "Yo yobbanepi maraṇaṁ labhate akāmaṁ",
  "anya-e1209n:390_0": "Kāmaṁ paratthaparapāṇaharo naro hi;",
  "anya-e1209n:391_0": "79.",
  "anya-e1209n:392_0": "So yācako bhavati bhinnakapālahattho",
  "anya-e1209n:393_0": "Muṇḍo dhigakkharasatehi ca tajjayanto,",
  "anya-e1209n:394_0": "Bhikkhaṁ sadāribhavane sakucelavāso",
  "anya-e1209n:395_0": "Dehe paratthi paracittaharo naro yo;",
  "anya-e1209n:396_0": "80.",
  "anya-e1209n:397_0": "Itthī namuñcati sadā puna itthibhāvā",
  "anya-e1209n:398_0": "Nārī sadā bhavati so puriso parattha,",
  "anya-e1209n:399_0": "Yo ācareyya paradāramalaṅghanīyaṁ",
  "anya-e1209n:400_0": "Ghorañca vindati sadā vyasanañca nekaṁ;",
  "anya-e1209n:401_0": "81.",
  "anya-e1209n:402_0": "Dīno vigandhavadano ca jaḷo apañño",
  "anya-e1209n:403_0": "Mūgo sadā bhavati appiyadassano ca,",
  "anya-e1209n:404_0": "Pappoti dukkhamatulañca manussabhūto",
  "anya-e1209n:405_0": "Vācaṁ musā bhaṇati yo hi apaññasatto;",
  "anya-e1209n:406_0": "82.",
  "anya-e1209n:407_0": "Ummattakā vigatalajjaguṇā bhavanti",
  "anya-e1209n:408_0": "Dīnā sadā vyasanasokaparāyaṇā ca,",
  "anya-e1209n:409_0": "Jātā bhavesu vividhesu virūpadehā",
  "anya-e1209n:410_0": "Pītvā halāhalavisaṁva suraṁ vipaññā;",
  "anya-e1209n:411_0": "83.",
  "anya-e1209n:412_0": "Pāpāni yena iha ācaritāni yāni",
  "anya-e1209n:413_0": "Yo vassakoṭinahutāni anappakāni,",
  "anya-e1209n:414_0": "Laddhāna ghoramatulaṁ narakesu dukkhaṁ",
  "anya-e1209n:415_0": "Pappoti cettha vividhavyasanañca nekaṁ;",
  "anya-e1209n:416_0": "84.",
  "anya-e1209n:417_0": "Lokattayesu sakalesu samaṁ na kiṁci",
  "anya-e1209n:418_0": "Lokassa santikaraṇaṁ ratanattayena,",
  "anya-e1209n:419_0": "Taṁtejasā sumahatā jitasabbapāpo",
  "anya-e1209n:420_0": "Sohaṁ sadādhigatasabbasukho bhaveyyaṁ;",
  "anya-e1209n:421_0": "85.",
  "anya-e1209n:422_0": "Lokattayesu sakalesu ca sabbasattā",
  "anya-e1209n:423_0": "Mittā ca majjharipubandhujanā ca sabbe,",
  "anya-e1209n:424_0": "Te sabbadā vigatarogabhayā visokā",
  "anya-e1209n:425_0": "Sabbaṁ sukhaṁ adhigatā muditā bhavantu;",
  "anya-e1209n:426_0": "86.",
  "anya-e1209n:427_0": "Kāyo karīsabharito viya bhinnakumbho",
  "anya-e1209n:428_0": "Kāyo sadā kalimalavyasanādhivāso,",
  "anya-e1209n:429_0": "Kāye vihaññati ca sabbasukhanti loko",
  "anya-e1209n:430_0": "Kāyo sadā maraṇarogajarādhivāso;",
  "anya-e1209n:431_0": "87.",
  "anya-e1209n:432_0": "So yobbanoti thaviroti ca bālakoti",
  "anya-e1209n:433_0": "Satte na pekkhati vihaññatireva maccu,",
  "anya-e1209n:434_0": "Sohaṁ ṭhitopi sayitopi ca pakkamanto",
  "anya-e1209n:435_0": "Gacchāmi maccuvadanaṁ niyataṁ tathā hi;",
  "anya-e1209n:436_0": "88.",
  "anya-e1209n:437_0": "Evaṁ yathā vihitadosamidaṁ sarīraṁ",
  "anya-e1209n:438_0": "Niccaṁva taggatamanā hadaye karotha,",
  "anya-e1209n:439_0": "Mettaṁ parittamasubhaṁ maraṇassatiñca",
  "anya-e1209n:440_0": "Bhāvetha bhāvanaratā satataṁ yatattā;",
  "anya-e1209n:441_0": "89.",
  "anya-e1209n:442_0": "Dānādi puññakiriyāni sukhudrayāni",
  "anya-e1209n:443_0": "Katvā ca tamphalamasesa mihappameyyaṁ,",
  "anya-e1209n:444_0": "Deyyaṁ sadā parahitāya sukhāya ceva",
  "anya-e1209n:445_0": "Kimbho tadeva nanu hatthagatañhi sāraṁ?",
  "anya-e1209n:446_0": "90.",
  "anya-e1209n:447_0": "Hetuṁ vinā na bhavatī hi ca kiṁci loke",
  "anya-e1209n:448_0": "Saddova pāṇitalaghaṭṭanahetujāto,",
  "anya-e1209n:449_0": "Evañca hetuphala bhāvavibhāgabhinno",
  "anya-e1209n:450_0": "Loko udeti ca vinassati tiṭṭhatī ca;",
  "anya-e1209n:451_0": "91.",
  "anya-e1209n:452_0": "Kammassa kāraṇāmayañhi yathā avijjā",
  "anya-e1209n:453_0": "Bho kammanā samadhigacchati jātibhedaṁ,",
  "anya-e1209n:454_0": "Jātiṁ paṭicca ca jarāmaraṇādidukkhaṁ",
  "anya-e1209n:455_0": "Sattā sadā paṭilabhanti anādikāle;",
  "anya-e1209n:456_0": "92.",
  "anya-e1209n:457_0": "Kammaṁ yathā na bhavatīha ca mohanāsā",
  "anya-e1209n:458_0": "Kammakkhayāpi ca na hoti bhavesu jāti,",
  "anya-e1209n:459_0": "Jātikkhayā iha jarāmaraṇādidukkhaṁ",
  "anya-e1209n:460_0": "Sabbakkhayo bhavati dīpevānilena;",
  "anya-e1209n:461_0": "93.",
  "anya-e1209n:462_0": "Yo passatīha satataṁ munidhammakāyaṁ",
  "anya-e1209n:463_0": "Buddhaṁ sa passati naro iti so avoca,",
  "anya-e1209n:464_0": "Buddhañca dhammamamalañca tilokanāthaṁ",
  "anya-e1209n:465_0": "Sampassituṁ vicinathā’pi ca dhammataṁ bho;",
  "anya-e1209n:466_0": "94.",
  "anya-e1209n:467_0": "Sallaṁva bho sunisitaṁ hadaye nimuggaṁ",
  "anya-e1209n:468_0": "Dosattayaṁ vividhapāpamalena littaṁ,",
  "anya-e1209n:469_0": "Nānāvidhabyasanabhājanamappasannaṁ",
  "anya-e1209n:470_0": "Paññāmayena balisena nirākarotha;",
  "anya-e1209n:471_0": "95.",
  "anya-e1209n:472_0": "Nākampayanti sakalāpi ca lokadhammā",
  "anya-e1209n:473_0": "Cittaṁ sadāpagatapāpakilesasallaṁ,",
  "anya-e1209n:474_0": "Rūpādayo ca vividhā visayā samaggā",
  "anya-e1209n:475_0": "Phuṭṭhaṁva merusikharaṁ mahatānilena;",
  "anya-e1209n:476_0": "96.",
  "anya-e1209n:477_0": "Saṁsāradukkhamagaṇeyya yathā munindo",
  "anya-e1209n:478_0": "Gambhirapāramita sāgaramuttaritvā,",
  "anya-e1209n:479_0": "Ñeyyaṁ abodhi nipuṇaṁ hatamohajālo",
  "anya-e1209n:480_0": "Tasmā sadā parahitaṁ paramaṁ ciṇātha;",
  "anya-e1209n:481_0": "97.",
  "anya-e1209n:482_0": "Ohāya so’dhigatamokkhasukhaṁ paresaṁ",
  "anya-e1209n:483_0": "Atthāya saṁcari bhavesu mahabbhayesu,",
  "anya-e1209n:484_0": "Evaṁ sadā parahitaṁ purato karitvā",
  "anya-e1209n:485_0": "Dhammo mayānucarito jagadatthameva;",
  "anya-e1209n:486_0": "98.",
  "anya-e1209n:487_0": "Laddhāna dullabhatarañca manussayoniṁ",
  "anya-e1209n:488_0": "Sabbaṁ papañcarahitaṁ khaṇasampadañca,",
  "anya-e1209n:489_0": "Ñatvāna āsavanudekahitañca dhammaṁ",
  "anya-e1209n:490_0": "Ko paññavā anavaraṁ na bhajeyya dhammaṁ?",
  "anya-e1209n:491_0": "99.",
  "anya-e1209n:492_0": "Laddhāna buddhasamayaṁ atidullabhaṁca",
  "anya-e1209n:493_0": "Saddhamma maggamasamaṁ sivadaṁ tatheva,",
  "anya-e1209n:494_0": "Kalyāṇamittapavare matisampadañca",
  "anya-e1209n:495_0": "Ko buddhimā anavaraṁ na bhajeyya dhammaṁ?",
  "anya-e1209n:496_0": "100.",
  "anya-e1209n:497_0": "Evampi dullabhataraṁ vibhave suladdhā",
  "anya-e1209n:498_0": "Maccheradosa viratā ubhayatthakāmā,",
  "anya-e1209n:499_0": "Saddhādidhammasahitā satatappamattā",
  "anya-e1209n:500_0": "Bho! Bho! Karotha amatādhigamāya puññaṁ;"
}