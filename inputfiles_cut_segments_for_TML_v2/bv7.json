{
  "bv7:0.1_0": "Buddhavaṁsa",
  "bv7:0.2_0": "7. Revatabuddhavaṁsa",
  "bv7:1.1_0": "Sumanassa aparena,",
  "bv7:1.2_0": "revato nāma nāyako;",
  "bv7:1.3_0": "Anūpamo asadiso,",
  "bv7:1.4_0": "atulo uttamo jino.",
  "bv7:2.1_0": "Sopi dhammaṁ pakāsesi,",
  "bv7:2.2_0": "brahmunā abhiyācito;",
  "bv7:2.3_0": "Khandhadhātuvavatthānaṁ,",
  "bv7:2.4_0": "appavattaṁ bhavābhave.",
  "bv7:3.1_0": "Tassābhisamayā tīṇi,",
  "bv7:3.2_0": "ahesuṁ dhammadesane;",
  "bv7:3.3_0": "Gaṇanāya na vattabbo,",
  "bv7:3.4_0": "paṭhamābhisamayo ahu.",
  "bv7:4.1_0": "Yadā arindamaṁ rājaṁ,",
  "bv7:4.2_0": "vinesi revato muni;",
  "bv7:4.3_0": "Tadā koṭisahassānaṁ,",
  "bv7:4.4_0": "dutiyābhisamayo ahu.",
  "bv7:5.1_0": "Sattāhaṁ paṭisallānā,",
  "bv7:5.2_0": "vuṭṭhahitvā narāsabho;",
  "bv7:5.3_0": "Koṭisataṁ naramarūnaṁ,",
  "bv7:5.4_0": "vinesi uttame phale.",
  "bv7:6.1_0": "Sannipātā tayo āsuṁ,",
  "bv7:6.2_0": "revatassa mahesino;",
  "bv7:6.3_0": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv7:6.4_0": "suvimuttāna tādinaṁ.",
  "bv7:7.1_0": "Atikkantā gaṇanapathaṁ,",
  "bv7:7.2_0": "paṭhamaṁ ye samāgatā;",
  "bv7:7.3_0": "Koṭisatasahassānaṁ,",
  "bv7:7.4_0": "dutiyo āsi samāgamo.",
  "bv7:8.1_0": "Yopi paññāya asamo,",
  "bv7:8.2_0": "tassa cakkānuvattako;",
  "bv7:8.3_0": "So tadā byādhito āsi,",
  "bv7:8.4_0": "patto jīvitasaṁsayaṁ.",
  "bv7:9.1_0": "Tassa gilānapucchāya,",
  "bv7:9.2_0": "ye tadā upagatā munī;",
  "bv7:9.3_0": "Koṭisahassā arahanto,",
  "bv7:9.4_0": "tatiyo āsi samāgamo.",
  "bv7:10.1_0": "Ahaṁ tena samayena,",
  "bv7:10.2_0": "atidevo nāma brāhmaṇo;",
  "bv7:10.3_0": "Upagantvā revataṁ buddhaṁ,",
  "bv7:10.4_0": "saraṇaṁ tassa gañchahaṁ.",
  "bv7:11.1_0": "Tassa sīlaṁ samādhiñca,",
  "bv7:11.2_0": "paññāguṇamanuttamaṁ;",
  "bv7:11.3_0": "Thomayitvā yathāthāmaṁ,",
  "bv7:11.4_0": "uttarīyamadāsahaṁ.",
  "bv7:12.1_0": "Sopi maṁ buddho byākāsi,",
  "bv7:12.2_0": "revato lokanāyako;",
  "bv7:12.3_0": "“Aparimeyyito kappe,",
  "bv7:12.4_0": "ayaṁ buddho bhavissati.",
  "bv7:13.1_0": "‘Padhānaṁ padahitvāna,",
  "bv7:13.2_0": "…pe…",
  "bv7:13.3_0": "hessāma sammukhā imaṁ’.",
  "bv7:14.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv7:14.2_0": "bhiyyo cittaṁ pasādayiṁ;",
  "bv7:14.3_0": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv7:14.4_0": "dasapāramipūriyā.",
  "bv7:15.1_0": "Tadāpi taṁ buddhadhammaṁ,",
  "bv7:15.2_0": "saritvā anubrūhayiṁ;",
  "bv7:15.3_0": "Āharissāmi taṁ dhammaṁ,",
  "bv7:15.4_0": "yaṁ mayhaṁ abhipatthitaṁ.",
  "bv7:16.1_0": "Nagaraṁ sudhaññavatī nāma,",
  "bv7:16.2_0": "Vipulo nāma khattiyo;",
  "bv7:16.3_0": "Vipulā nāma janikā,",
  "bv7:16.4_0": "Revatassa mahesino.",
  "bv7:17.1_0": "Cha ca vassasahassāni,",
  "bv7:17.2_0": "agāraṁ ajjha so vasi;",
  "bv7:17.3_0": "Sudassano ratanagghi,",
  "bv7:17.4_0": "āveḷo ca vibhūsito;",
  "bv7:17.5_0": "Puññakammābhinibbattā,",
  "bv7:17.6_0": "tayo pāsādamuttamā.",
  "bv7:18.1_0": "Tettiṁsa ca sahassāni,",
  "bv7:18.2_0": "nāriyo samalaṅkatā;",
  "bv7:18.3_0": "Sudassanā nāma nārī,",
  "bv7:18.4_0": "varuṇo nāma atrajo.",
  "bv7:19.1_0": "Nimitte caturo disvā,",
  "bv7:19.2_0": "rathayānena nikkhami;",
  "bv7:19.3_0": "Anūnasattamāsāni,",
  "bv7:19.4_0": "padhānaṁ padahī jino.",
  "bv7:20.1_0": "Brahmunā yācito santo,",
  "bv7:20.2_0": "revato lokanāyako;",
  "bv7:20.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv7:20.4_0": "varuṇārāme sirīghare.",
  "bv7:21.1_0": "Varuṇo brahmadevo ca,",
  "bv7:21.2_0": "ahesuṁ aggasāvakā;",
  "bv7:21.3_0": "Sambhavo nāmupaṭṭhāko,",
  "bv7:21.4_0": "revatassa mahesino.",
  "bv7:22.1_0": "Bhaddā ceva subhaddā ca,",
  "bv7:22.2_0": "ahesuṁ aggasāvikā;",
  "bv7:22.3_0": "Sopi buddho asamasamo,",
  "bv7:22.4_0": "nāgamūle abujjhatha.",
  "bv7:23.1_0": "Padumo kuñjaro ceva,",
  "bv7:23.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv7:23.3_0": "Sirīmā ceva yasavatī,",
  "bv7:23.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv7:24.1_0": "Uccattanena so buddho,",
  "bv7:24.2_0": "asītihatthamuggato;",
  "bv7:24.3_0": "Obhāseti disā sabbā,",
  "bv7:24.4_0": "indaketuva uggato.",
  "bv7:25.1_0": "Tassa sarīre nibbattā,",
  "bv7:25.2_0": "pabhāmālā anuttarā;",
  "bv7:25.3_0": "Divā vā yadi vā rattiṁ,",
  "bv7:25.4_0": "samantā pharati yojanaṁ.",
  "bv7:26.1_0": "Saṭṭhivassasahassāni,",
  "bv7:26.2_0": "āyu vijjati tāvade;",
  "bv7:26.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv7:26.4_0": "tāresi janataṁ bahuṁ.",
  "bv7:27.1_0": "Dassayitvā buddhabalaṁ,",
  "bv7:27.2_0": "amataṁ loke pakāsayaṁ;",
  "bv7:27.3_0": "Nibbāyi anupādāno,",
  "bv7:27.4_0": "yathaggupādānasaṅkhayā.",
  "bv7:28.1_0": "So ca kāyo ratananibho,",
  "bv7:28.2_0": "so ca dhammo asādiso;",
  "bv7:28.3_0": "Sabbaṁ tamantarahitaṁ,",
  "bv7:28.4_0": "nanu rittā sabbasaṅkhārā.",
  "bv7:29.1_0": "Revato yasadharo buddho,",
  "bv7:29.2_0": "Nibbuto so mahāpure;",
  "bv7:29.3_0": "Dhātuvitthārikaṁ āsi,",
  "bv7:29.4_0": "Tesu tesu padesato”ti.",
  "bv7:30.1_0": "Revatassa bhagavato vaṁso pañcamo."
}