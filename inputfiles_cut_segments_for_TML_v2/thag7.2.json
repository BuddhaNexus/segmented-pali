{
  "thag7.2:0.1_0": "Theragāthā",
  "thag7.2:0.2_0": "Sattakanipāta",
  "thag7.2:0.3_0": "Paṭhamavagga",
  "thag7.2:0.4_0": "7.2 Lakuṇḍakabhaddiyattheragāthā",
  "thag7.2:1.1_0": "“Pare ambāṭakārāme,",
  "thag7.2:1.2_0": "vanasaṇḍamhi bhaddiyo;",
  "thag7.2:1.3_0": "Samūlaṁ taṇhamabbuyha,",
  "thag7.2:1.4_0": "tattha bhaddova jhāyati.",
  "thag7.2:2.1_0": "Ramanteke mudiṅgehi,",
  "thag7.2:2.2_0": "vīṇāhi paṇavehi ca;",
  "thag7.2:2.3_0": "Ahañca rukkhamūlasmiṁ,",
  "thag7.2:2.4_0": "rato buddhassa sāsane.",
  "thag7.2:3.1_0": "Buddho ce me varaṁ dajjā,",
  "thag7.2:3.2_0": "so ca labbhetha me varo;",
  "thag7.2:3.3_0": "Gaṇhehaṁ sabbalokassa,",
  "thag7.2:3.4_0": "niccaṁ kāyagataṁ satiṁ.",
  "thag7.2:4.1_0": "Ye maṁ rūpena pāmiṁsu,",
  "thag7.2:4.2_0": "ye ca ghosena anvagū;",
  "thag7.2:4.3_0": "Chandarāgavasūpetā,",
  "thag7.2:4.4_0": "na maṁ jānanti te janā.",
  "thag7.2:5.1_0": "Ajjhattañca na jānāti,",
  "thag7.2:5.2_0": "bahiddhā ca na passati;",
  "thag7.2:5.3_0": "Samantāvaraṇo bālo,",
  "thag7.2:5.4_0": "sa ve ghosena vuyhati.",
  "thag7.2:6.1_0": "Ajjhattañca na jānāti,",
  "thag7.2:6.2_0": "bahiddhā ca vipassati;",
  "thag7.2:6.3_0": "Bahiddhā phaladassāvī,",
  "thag7.2:6.4_0": "sopi ghosena vuyhati.",
  "thag7.2:7.1_0": "Ajjhattañca pajānāti,",
  "thag7.2:7.2_0": "bahiddhā ca vipassati;",
  "thag7.2:7.3_0": "Anāvaraṇadassāvī,",
  "thag7.2:7.4_0": "na so ghosena vuyhatī”ti.",
  "thag7.2:7.5_0": "… Lakuṇḍakabhaddiyo thero …."
}