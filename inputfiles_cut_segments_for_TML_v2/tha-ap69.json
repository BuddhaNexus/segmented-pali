{
  "tha-ap69:0.1_0": "Therāpadāna",
  "tha-ap69:0.2_0": "Sakacintaniyavagga",
  "tha-ap69:0.3_0": "7. Vatthadāyakattheraapadāna",
  "tha-ap69:1.1_0": "“Pakkhijāto tadā āsiṁ,",
  "tha-ap69:1.2_0": "supaṇṇo garuḷādhipo;",
  "tha-ap69:1.3_0": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap69:1.4_0": "gacchantaṁ gandhamādanaṁ.",
  "tha-ap69:2.1_0": "Jahitvā garuḷavaṇṇaṁ,",
  "tha-ap69:2.2_0": "māṇavakaṁ adhārayiṁ;",
  "tha-ap69:2.3_0": "Ekaṁ vatthaṁ mayā dinnaṁ,",
  "tha-ap69:2.4_0": "dvipadindassa tādino.",
  "tha-ap69:3.1_0": "Tañca dussaṁ paṭiggayha,",
  "tha-ap69:3.2_0": "buddho lokagganāyako;",
  "tha-ap69:3.3_0": "Antalikkhe ṭhito satthā,",
  "tha-ap69:3.4_0": "imā gāthā abhāsatha.",
  "tha-ap69:4.1_0": "‘Iminā vatthadānena,",
  "tha-ap69:4.2_0": "cittassa paṇidhīhi ca;",
  "tha-ap69:4.3_0": "Pahāya garuḷaṁ yoniṁ,",
  "tha-ap69:4.4_0": "devaloke ramissati’.",
  "tha-ap69:5.1_0": "Atthadassī tu bhagavā,",
  "tha-ap69:5.2_0": "lokajeṭṭho narāsabho;",
  "tha-ap69:5.3_0": "Vatthadānaṁ pasaṁsitvā,",
  "tha-ap69:5.4_0": "pakkāmi uttarāmukho.",
  "tha-ap69:6.1_0": "Bhave nibbattamānamhi,",
  "tha-ap69:6.2_0": "honti me vatthasampadā;",
  "tha-ap69:6.3_0": "Ākāse chadanaṁ hoti,",
  "tha-ap69:6.4_0": "vatthadānassidaṁ phalaṁ.",
  "tha-ap69:7.1_0": "Aruṇavā satta janā,",
  "tha-ap69:7.2_0": "cakkavattī mahabbalā;",
  "tha-ap69:7.3_0": "Chattiṁsatimhi āsiṁsu,",
  "tha-ap69:7.4_0": "kappamhi manujādhipā.",
  "tha-ap69:8.1_0": "Paṭisambhidā catasso,",
  "tha-ap69:8.2_0": "…pe…",
  "tha-ap69:8.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap69:9.1_0": "Itthaṁ sudaṁ āyasmā vatthadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap69:10.1_0": "Vatthadāyakattherassāpadānaṁ sattamaṁ."
}