{
  "tha-ap208:0.1_0": "Therāpadāna",
  "tha-ap208:0.2_0": "Kaṇikārapupphiyavagga",
  "tha-ap208:0.3_0": "6. Udakadāyakattheraapadāna",
  "tha-ap208:1.1_0": "“Bhuñjantaṁ samaṇaṁ disvā,",
  "tha-ap208:1.2_0": "vippasannamanāvilaṁ;",
  "tha-ap208:1.3_0": "Ghaṭenodakamādāya,",
  "tha-ap208:1.4_0": "siddhatthassa adāsahaṁ.",
  "tha-ap208:2.1_0": "Nimmalo homahaṁ ajja,",
  "tha-ap208:2.2_0": "vimalo khīṇasaṁsayo;",
  "tha-ap208:2.3_0": "Bhave nibbattamānamhi,",
  "tha-ap208:2.4_0": "phalaṁ nibbattate mama.",
  "tha-ap208:3.1_0": "Catunnavutito kappe,",
  "tha-ap208:3.2_0": "udakaṁ yamadāsahaṁ;",
  "tha-ap208:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap208:3.4_0": "dakadānassidaṁ phalaṁ.",
  "tha-ap208:4.1_0": "Ekasaṭṭhimhito kappe,",
  "tha-ap208:4.2_0": "ekova vimalo ahu;",
  "tha-ap208:4.3_0": "Sattaratanasampanno,",
  "tha-ap208:4.4_0": "cakkavattī mahabbalo.",
  "tha-ap208:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap208:5.2_0": "…pe…",
  "tha-ap208:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap208:6.1_0": "Itthaṁ sudaṁ āyasmā udakadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap208:7.1_0": "Udakadāyakattherassāpadānaṁ chaṭṭhaṁ."
}