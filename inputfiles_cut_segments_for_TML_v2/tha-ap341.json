{
  "tha-ap341:0.1_0": "Therāpadāna",
  "tha-ap341:0.2_0": "Gandhodakavagga",
  "tha-ap341:0.3_0": "9 Dhammasavaniyattheraapadāna",
  "tha-ap341:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap341:1.2_0": "sabbadhammāna pāragū;",
  "tha-ap341:1.3_0": "Catusaccaṁ pakāsento,",
  "tha-ap341:1.4_0": "santāresi bahuṁ janaṁ.",
  "tha-ap341:2.1_0": "Ahaṁ tena samayena,",
  "tha-ap341:2.2_0": "jaṭilo uggatāpano;",
  "tha-ap341:2.3_0": "Dhunanto vākacīrāni,",
  "tha-ap341:2.4_0": "gacchāmi ambare tadā.",
  "tha-ap341:3.1_0": "Buddhaseṭṭhassa upari,",
  "tha-ap341:3.2_0": "gantuṁ na visahāmahaṁ;",
  "tha-ap341:3.3_0": "Pakkhīva selamāsajja,",
  "tha-ap341:3.4_0": "gamanaṁ na labhāmahaṁ.",
  "tha-ap341:4.1_0": "Na me idaṁ bhūtapubbaṁ,",
  "tha-ap341:4.2_0": "iriyassa vikopanaṁ;",
  "tha-ap341:4.3_0": "Dake yathā ummujjitvā,",
  "tha-ap341:4.4_0": "evaṁ gacchāmi ambare.",
  "tha-ap341:5.1_0": "Uḷārabhūto manujo,",
  "tha-ap341:5.2_0": "heṭṭhāsīno bhavissati;",
  "tha-ap341:5.3_0": "Handa menaṁ gavesissaṁ,",
  "tha-ap341:5.4_0": "api atthaṁ labheyyahaṁ.",
  "tha-ap341:6.1_0": "Orohanto antalikkhā,",
  "tha-ap341:6.2_0": "saddamassosi satthuno;",
  "tha-ap341:6.3_0": "Aniccataṁ kathentassa,",
  "tha-ap341:6.4_0": "tamahaṁ uggahiṁ tadā.",
  "tha-ap341:7.1_0": "Aniccasaññamuggayha,",
  "tha-ap341:7.2_0": "agamāsiṁ mamassamaṁ;",
  "tha-ap341:7.3_0": "Yāvatāyuṁ vasitvāna,",
  "tha-ap341:7.4_0": "tattha kālaṅkato ahaṁ.",
  "tha-ap341:8.1_0": "Carime vattamānamhi,",
  "tha-ap341:8.2_0": "Taṁ dhammasavanaṁ sariṁ;",
  "tha-ap341:8.3_0": "Tena kammena sukatena,",
  "tha-ap341:8.4_0": "Tāvatiṁsamagacchahaṁ.",
  "tha-ap341:9.1_0": "Tiṁsakappasahassāni,",
  "tha-ap341:9.2_0": "devaloke ramiṁ ahaṁ;",
  "tha-ap341:9.3_0": "Ekapaññāsakkhattuñca,",
  "tha-ap341:9.4_0": "devarajjamakārayiṁ.",
  "tha-ap341:10.1_0": "Ekasattatikkhattuñca,",
  "tha-ap341:10.2_0": "cakkavattī ahosahaṁ;",
  "tha-ap341:10.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap341:10.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap341:11.1_0": "Pitugehe nisīditvā,",
  "tha-ap341:11.2_0": "samaṇo bhāvitindriyo;",
  "tha-ap341:11.3_0": "Gāthāya paridīpento,",
  "tha-ap341:11.4_0": "aniccatamudāhari.",
  "tha-ap341:12.1_0": "Anussarāmi taṁ saññaṁ,",
  "tha-ap341:12.2_0": "saṁsaranto bhavābhave;",
  "tha-ap341:12.3_0": "Na koṭiṁ paṭivijjhāmi,",
  "tha-ap341:12.4_0": "nibbānaṁ accutaṁ padaṁ.",
  "tha-ap341:13.1_0": "Aniccā vata saṅkhārā,",
  "tha-ap341:13.2_0": "uppādavayadhammino;",
  "tha-ap341:13.3_0": "Uppajjitvā nirujjhanti,",
  "tha-ap341:13.4_0": "tesaṁ vūpasamo sukho.",
  "tha-ap341:14.1_0": "Saha gāthaṁ suṇitvāna,",
  "tha-ap341:14.2_0": "pubbakammaṁ anussariṁ;",
  "tha-ap341:14.3_0": "Ekāsane nisīditvā,",
  "tha-ap341:14.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap341:15.1_0": "Jātiyā sattavassohaṁ,",
  "tha-ap341:15.2_0": "arahattamapāpuṇiṁ;",
  "tha-ap341:15.3_0": "Upasampādayi buddho,",
  "tha-ap341:15.4_0": "guṇamaññāya cakkhumā.",
  "tha-ap341:16.1_0": "Dārakova ahaṁ santo,",
  "tha-ap341:16.2_0": "karaṇīyaṁ samāpayiṁ;",
  "tha-ap341:16.3_0": "Kiṁ me karaṇīyaṁ ajja,",
  "tha-ap341:16.4_0": "sakyaputtassa sāsane.",
  "tha-ap341:17.1_0": "Satasahassito kappe,",
  "tha-ap341:17.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap341:17.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap341:17.4_0": "saddhammasavane phalaṁ.",
  "tha-ap341:18.1_0": "Paṭisambhidā catasso,",
  "tha-ap341:18.2_0": "…pe…",
  "tha-ap341:18.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap341:19.1_0": "Itthaṁ sudaṁ āyasmā dhammasavaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap341:20.1_0": "Dhammasavaniyattherassāpadānaṁ navamaṁ."
}