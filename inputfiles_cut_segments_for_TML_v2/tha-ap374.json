{
  "tha-ap374:0.1_0": "Therāpadāna",
  "tha-ap374:0.2_0": "Bodhivandanavagga",
  "tha-ap374:0.3_0": "2. Pāṭalipupphiyattheraapadāna",
  "tha-ap374:1.1_0": "“Vipassī nāma bhagavā,",
  "tha-ap374:1.2_0": "sayambhū aggapuggalo;",
  "tha-ap374:1.3_0": "Purakkhato sasissehi,",
  "tha-ap374:1.4_0": "pāvisi bandhumaṁ jino.",
  "tha-ap374:2.1_0": "Tīṇi pāṭalipupphāni,",
  "tha-ap374:2.2_0": "ucchaṅge ṭhapitāni me;",
  "tha-ap374:2.3_0": "Sīsaṁ nhāyitukāmova,",
  "tha-ap374:2.4_0": "nadītitthaṁ agacchahaṁ.",
  "tha-ap374:3.1_0": "Nikkhamma bandhumatiyā,",
  "tha-ap374:3.2_0": "addasaṁ lokanāyakaṁ;",
  "tha-ap374:3.3_0": "Indīvaraṁva jalitaṁ,",
  "tha-ap374:3.4_0": "ādittaṁva hutāsanaṁ.",
  "tha-ap374:4.1_0": "Byagghūsabhaṁva pavaraṁ,",
  "tha-ap374:4.2_0": "abhijātaṁva kesariṁ;",
  "tha-ap374:4.3_0": "Gacchantaṁ samaṇānaggaṁ,",
  "tha-ap374:4.4_0": "bhikkhusaṅghapurakkhataṁ.",
  "tha-ap374:5.1_0": "Tasmiṁ pasanno sugate,",
  "tha-ap374:5.2_0": "kilesamaladhovane;",
  "tha-ap374:5.3_0": "Gahetvā tīṇi pupphāni,",
  "tha-ap374:5.4_0": "buddhaseṭṭhaṁ apūjayiṁ.",
  "tha-ap374:6.1_0": "Ekanavutito kappe,",
  "tha-ap374:6.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap374:6.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap374:6.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap374:7.1_0": "Paṭisambhidā catasso,",
  "tha-ap374:7.2_0": "…pe…",
  "tha-ap374:7.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap374:8.1_0": "Itthaṁ sudaṁ āyasmā pāṭalipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap374:9.1_0": "Pāṭalipupphiyattherassāpadānaṁ dutiyaṁ."
}