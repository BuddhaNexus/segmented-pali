{
  "thag8.3:0.1_0": "Theragāthā",
  "thag8.3:0.2_0": "Aṭṭhakanipāta",
  "thag8.3:0.3_0": "Paṭhamavagga",
  "thag8.3:0.4_0": "8.3. Mahāpanthakattheragāthā",
  "thag8.3:1.1_0": "“Yadā paṭhamamaddakkhiṁ,",
  "thag8.3:1.2_0": "satthāramakutobhayaṁ;",
  "thag8.3:1.3_0": "Tato me ahu saṁvego,",
  "thag8.3:1.4_0": "passitvā purisuttamaṁ.",
  "thag8.3:2.1_0": "Siriṁ hatthehi pādehi,",
  "thag8.3:2.2_0": "yo paṇāmeyya āgataṁ;",
  "thag8.3:2.3_0": "Etādisaṁ so satthāraṁ,",
  "thag8.3:2.4_0": "ārādhetvā virādhaye.",
  "thag8.3:3.1_0": "Tadāhaṁ puttadārañca,",
  "thag8.3:3.2_0": "dhanadhaññañca chaḍḍayiṁ;",
  "thag8.3:3.3_0": "Kesamassūni chedetvā,",
  "thag8.3:3.4_0": "pabbajiṁ anagāriyaṁ.",
  "thag8.3:4.1_0": "Sikkhāsājīvasampanno,",
  "thag8.3:4.2_0": "indriyesu susaṁvuto;",
  "thag8.3:4.3_0": "Namassamāno sambuddhaṁ,",
  "thag8.3:4.4_0": "vihāsiṁ aparājito.",
  "thag8.3:5.1_0": "Tato me paṇidhī āsi,",
  "thag8.3:5.2_0": "cetaso abhipatthito;",
  "thag8.3:5.3_0": "Na nisīde muhuttampi,",
  "thag8.3:5.4_0": "taṇhāsalle anūhate.",
  "thag8.3:6.1_0": "Tassa mevaṁ viharato,",
  "thag8.3:6.2_0": "passa vīriyaparakkamaṁ;",
  "thag8.3:6.3_0": "Tisso vijjā anuppattā,",
  "thag8.3:6.4_0": "kataṁ buddhassa sāsanaṁ.",
  "thag8.3:7.1_0": "Pubbenivāsaṁ jānāmi,",
  "thag8.3:7.2_0": "dibbacakkhu visodhitaṁ;",
  "thag8.3:7.3_0": "Arahā dakkhiṇeyyomhi,",
  "thag8.3:7.4_0": "vippamutto nirūpadhi.",
  "thag8.3:8.1_0": "Tato ratyā vivasāne,",
  "thag8.3:8.2_0": "sūriyuggamanaṁ pati;",
  "thag8.3:8.3_0": "Sabbaṁ taṇhaṁ visosetvā,",
  "thag8.3:8.4_0": "pallaṅkena upāvisin”ti.",
  "thag8.3:8.5_0": "…",
  "thag8.3:8.6_0": "Mahāpanthako thero ….",
  "thag8.3:8.7_0": "Aṭṭhakanipāto niṭṭhito.",
  "thag8.3:9.0_0": "Tatruddānaṁ",
  "thag8.3:9.1_0": "Mahākaccāyano thero,",
  "thag8.3:9.2_0": "sirimitto mahāpanthako;",
  "thag8.3:9.3_0": "Ete aṭṭhanipātamhi,",
  "thag8.3:9.4_0": "gāthāyo catuvīsatīti."
}