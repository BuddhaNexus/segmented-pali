{
  "tha-ap486:0.1_0": "Therāpadāna",
  "tha-ap486:0.2_0": "Paṁsukūlavagga",
  "tha-ap486:0.3_0": "4 Ñāṇathavikattheraapadāna",
  "tha-ap486:1.1_0": "“Dakkhiṇe himavantassa,",
  "tha-ap486:1.2_0": "sukato assamo mama;",
  "tha-ap486:1.3_0": "Uttamatthaṁ gavesanto,",
  "tha-ap486:1.4_0": "vasāmi vipine tadā.",
  "tha-ap486:2.1_0": "Lābhālābhena santuṭṭho,",
  "tha-ap486:2.2_0": "mūlena ca phalena ca;",
  "tha-ap486:2.3_0": "Anvesanto ācariyaṁ,",
  "tha-ap486:2.4_0": "vasāmi ekako ahaṁ.",
  "tha-ap486:3.1_0": "Sumedho nāma sambuddho,",
  "tha-ap486:3.2_0": "loke uppajji tāvade;",
  "tha-ap486:3.3_0": "Catusaccaṁ pakāseti,",
  "tha-ap486:3.4_0": "uddharanto mahājanaṁ.",
  "tha-ap486:4.1_0": "Nāhaṁ suṇomi sambuddhaṁ,",
  "tha-ap486:4.2_0": "napi me koci saṁsati;",
  "tha-ap486:4.3_0": "Aṭṭhavasse atikkante,",
  "tha-ap486:4.4_0": "assosiṁ lokanāyakaṁ.",
  "tha-ap486:5.1_0": "Aggidāruṁ nīharitvā,",
  "tha-ap486:5.2_0": "sammajjitvāna assamaṁ;",
  "tha-ap486:5.3_0": "Khāribhāraṁ gahetvāna,",
  "tha-ap486:5.4_0": "nikkhamiṁ vipinā ahaṁ.",
  "tha-ap486:6.1_0": "Ekarattiṁ vasantohaṁ,",
  "tha-ap486:6.2_0": "gāmesu nigamesu ca;",
  "tha-ap486:6.3_0": "Anupubbena candavatiṁ,",
  "tha-ap486:6.4_0": "tadāhaṁ upasaṅkamiṁ.",
  "tha-ap486:7.1_0": "Bhagavā tamhi samaye,",
  "tha-ap486:7.2_0": "sumedho lokanāyako;",
  "tha-ap486:7.3_0": "Uddharanto bahū satte,",
  "tha-ap486:7.4_0": "deseti amataṁ padaṁ.",
  "tha-ap486:8.1_0": "Janakāyamatikkamma,",
  "tha-ap486:8.2_0": "vanditvā jinasāgaraṁ;",
  "tha-ap486:8.3_0": "Ekaṁsaṁ ajinaṁ katvā,",
  "tha-ap486:8.4_0": "santhaviṁ lokanāyakaṁ.",
  "tha-ap486:9.1_0": "‘Tuvaṁ satthā ca ketu ca,",
  "tha-ap486:9.2_0": "dhajo yūpo ca pāṇinaṁ;",
  "tha-ap486:9.3_0": "Parāyaṇo patiṭṭhā ca,",
  "tha-ap486:9.4_0": "dīpo ca dvipaduttamo.",
  "tha-ap486:10.1_0": "Ekavīsatimaṁ bhāṇavāraṁ.",
  "tha-ap486:11.1_0": "Nepuñño dassane vīro,",
  "tha-ap486:11.2_0": "tāresi janataṁ tuvaṁ;",
  "tha-ap486:11.3_0": "Natthañño tārako loke,",
  "tha-ap486:11.4_0": "tavuttaritaro mune.",
  "tha-ap486:12.1_0": "Sakkā theve kusaggena,",
  "tha-ap486:12.2_0": "pametuṁ sāgaruttame;",
  "tha-ap486:12.3_0": "Na tveva tava sabbaññu,",
  "tha-ap486:12.4_0": "ñāṇaṁ sakkā pametave.",
  "tha-ap486:13.1_0": "Tuladaṇḍe ṭhapetvāna,",
  "tha-ap486:13.2_0": "mahiṁ sakkā dharetave;",
  "tha-ap486:13.3_0": "Na tveva tava paññāya,",
  "tha-ap486:13.4_0": "pamāṇamatthi cakkhuma.",
  "tha-ap486:14.1_0": "Ākāso minituṁ sakkā,",
  "tha-ap486:14.2_0": "rajjuyā aṅgulena vā;",
  "tha-ap486:14.3_0": "Na tveva tava sabbaññu,",
  "tha-ap486:14.4_0": "sīlaṁ sakkā pametave.",
  "tha-ap486:15.1_0": "Mahāsamudde udakaṁ,",
  "tha-ap486:15.2_0": "ākāso ca vasundharā;",
  "tha-ap486:15.3_0": "Parimeyyāni etāni,",
  "tha-ap486:15.4_0": "appameyyosi cakkhuma’.",
  "tha-ap486:16.1_0": "Chahi gāthāhi sabbaññuṁ,",
  "tha-ap486:16.2_0": "kittayitvā mahāyasaṁ;",
  "tha-ap486:16.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap486:16.4_0": "tuṇhī aṭṭhāsahaṁ tadā.",
  "tha-ap486:17.1_0": "Yaṁ vadanti sumedhoti,",
  "tha-ap486:17.2_0": "bhūripaññaṁ sumedhasaṁ;",
  "tha-ap486:17.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap486:17.4_0": "imā gāthā abhāsatha.",
  "tha-ap486:18.1_0": "‘Yo me ñāṇaṁ pakittesi,",
  "tha-ap486:18.2_0": "vippasannena cetasā;",
  "tha-ap486:18.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap486:18.4_0": "suṇātha mama bhāsato.",
  "tha-ap486:19.1_0": "Sattasattati kappāni,",
  "tha-ap486:19.2_0": "devaloke ramissati;",
  "tha-ap486:19.3_0": "Sahassakkhattuṁ devindo,",
  "tha-ap486:19.4_0": "devarajjaṁ karissati.",
  "tha-ap486:20.1_0": "Anekasatakkhattuñca,",
  "tha-ap486:20.2_0": "cakkavattī bhavissati;",
  "tha-ap486:20.3_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap486:20.4_0": "gaṇanāto asaṅkhiyaṁ.",
  "tha-ap486:21.1_0": "Devabhūto manusso vā,",
  "tha-ap486:21.2_0": "puññakammasamāhito;",
  "tha-ap486:21.3_0": "Anūnamanasaṅkappo,",
  "tha-ap486:21.4_0": "tikkhapañño bhavissati’.",
  "tha-ap486:22.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap486:22.2_0": "okkākakulasambhavo;",
  "tha-ap486:22.3_0": "Gotamo nāma gottena,",
  "tha-ap486:22.4_0": "satthā loke bhavissati.",
  "tha-ap486:23.1_0": "Agārā abhinikkhamma,",
  "tha-ap486:23.2_0": "pabbajissatikiñcano;",
  "tha-ap486:23.3_0": "Jātiyā sattavassena,",
  "tha-ap486:23.4_0": "arahattaṁ phusissati.",
  "tha-ap486:24.1_0": "Yato sarāmi attānaṁ,",
  "tha-ap486:24.2_0": "yato pattosmi sāsanaṁ;",
  "tha-ap486:24.3_0": "Etthantare na jānāmi,",
  "tha-ap486:24.4_0": "cetanaṁ amanoramaṁ.",
  "tha-ap486:25.1_0": "Saṁsaritvā bhave sabbe,",
  "tha-ap486:25.2_0": "sampattānubhaviṁ ahaṁ;",
  "tha-ap486:25.3_0": "Bhoge me ūnatā natthi,",
  "tha-ap486:25.4_0": "phalaṁ ñāṇassa thomane.",
  "tha-ap486:26.1_0": "Tiyaggī nibbutā mayhaṁ,",
  "tha-ap486:26.2_0": "bhavā sabbe samūhatā;",
  "tha-ap486:26.3_0": "Sabbāsavā parikkhīṇā,",
  "tha-ap486:26.4_0": "natthi dāni punabbhavo.",
  "tha-ap486:27.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap486:27.2_0": "yaṁ ñāṇamathaviṁ ahaṁ;",
  "tha-ap486:27.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap486:27.4_0": "phalaṁ ñāṇassa thomane.",
  "tha-ap486:28.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap486:28.2_0": "…pe…",
  "tha-ap486:28.3_0": "viharāmi anāsavo.",
  "tha-ap486:29.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap486:29.2_0": "…pe…",
  "tha-ap486:29.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap486:30.1_0": "Paṭisambhidā catasso,",
  "tha-ap486:30.2_0": "…pe…",
  "tha-ap486:30.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap486:31.1_0": "Itthaṁ sudaṁ āyasmā ñāṇathaviko thero imā gāthāyo abhāsitthāti.",
  "tha-ap486:32.1_0": "Ñāṇathavikattherassāpadānaṁ catutthaṁ."
}