{
  "tha-ap459:0.1_0": "Therāpadāna",
  "tha-ap459:0.2_0": "Jagatidāyakavagga",
  "tha-ap459:0.3_0": "7. Ekachattiyattheraapadāna",
  "tha-ap459:1.1_0": "“Aṅgārajātā pathavī,",
  "tha-ap459:1.2_0": "kukkuḷānugatā mahī;",
  "tha-ap459:1.3_0": "Padumuttaro bhagavā,",
  "tha-ap459:1.4_0": "abbhokāsamhi caṅkami.",
  "tha-ap459:2.1_0": "Paṇḍaraṁ chattamādāya,",
  "tha-ap459:2.2_0": "addhānaṁ paṭipajjahaṁ;",
  "tha-ap459:2.3_0": "Tattha disvāna sambuddhaṁ,",
  "tha-ap459:2.4_0": "vitti me upapajjatha.",
  "tha-ap459:3.1_0": "Marīciyotthaṭā bhūmi,",
  "tha-ap459:3.2_0": "aṅgārāva mahī ayaṁ;",
  "tha-ap459:3.3_0": "Upahanti mahāvātā,",
  "tha-ap459:3.4_0": "sarīrassāsukhepanā.",
  "tha-ap459:4.1_0": "Sītaṁ uṇhaṁ vihanantaṁ,",
  "tha-ap459:4.2_0": "vātātapanivāraṇaṁ;",
  "tha-ap459:4.3_0": "Paṭiggaṇha imaṁ chattaṁ,",
  "tha-ap459:4.4_0": "phassayissāmi nibbutiṁ.",
  "tha-ap459:5.1_0": "Anukampako kāruṇiko,",
  "tha-ap459:5.2_0": "padumuttaro mahāyaso;",
  "tha-ap459:5.3_0": "Mama saṅkappamaññāya,",
  "tha-ap459:5.4_0": "paṭiggaṇhi tadā jino.",
  "tha-ap459:6.1_0": "Tiṁsa kappāni devindo,",
  "tha-ap459:6.2_0": "devarajjamakārayiṁ;",
  "tha-ap459:6.3_0": "Satānaṁ pañcakkhattuñca,",
  "tha-ap459:6.4_0": "cakkavattī ahosahaṁ.",
  "tha-ap459:7.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap459:7.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap459:7.3_0": "Anubhomi sakaṁ kammaṁ,",
  "tha-ap459:7.4_0": "pubbe sukatamattano.",
  "tha-ap459:8.1_0": "Ayaṁ me pacchimā jāti,",
  "tha-ap459:8.2_0": "carimo vattate bhavo;",
  "tha-ap459:8.3_0": "Ajjāpi setacchattaṁ me,",
  "tha-ap459:8.4_0": "sabbakālaṁ dharīyati.",
  "tha-ap459:9.1_0": "Satasahassito kappe,",
  "tha-ap459:9.2_0": "yaṁ chattamadadiṁ tadā;",
  "tha-ap459:9.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap459:9.4_0": "chattadānassidaṁ phalaṁ.",
  "tha-ap459:10.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap459:10.2_0": "…pe…",
  "tha-ap459:10.3_0": "viharāmi anāsavo.",
  "tha-ap459:11.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap459:11.2_0": "…pe…",
  "tha-ap459:11.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap459:12.1_0": "Paṭisambhidā catasso,",
  "tha-ap459:12.2_0": "…pe…",
  "tha-ap459:12.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap459:13.1_0": "Itthaṁ sudaṁ āyasmā ekachattiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap459:14.1_0": "Ekachattiyattherassāpadānaṁ sattamaṁ."
}