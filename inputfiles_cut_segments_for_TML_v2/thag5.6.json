{
  "thag5.6:0.1_0": "Theragāthā",
  "thag5.6:0.2_0": "Pañcakanipāta",
  "thag5.6:0.3_0": "Paṭhamavagga",
  "thag5.6:0.4_0": "5.6. Nadīkassapattheragāthā",
  "thag5.6:1.1_0": "“Atthāya vata me buddho,",
  "thag5.6:1.2_0": "nadiṁ nerañjaraṁ agā;",
  "thag5.6:1.3_0": "Yassāhaṁ dhammaṁ sutvāna,",
  "thag5.6:1.4_0": "micchādiṭṭhiṁ vivajjayiṁ.",
  "thag5.6:2.1_0": "Yajiṁ uccāvace yaññe,",
  "thag5.6:2.2_0": "aggihuttaṁ juhiṁ ahaṁ;",
  "thag5.6:2.3_0": "‘Esā suddhī’ti maññanto,",
  "thag5.6:2.4_0": "andhabhūto puthujjano.",
  "thag5.6:3.1_0": "Diṭṭhigahanapakkhando,",
  "thag5.6:3.2_0": "parāmāsena mohito;",
  "thag5.6:3.3_0": "Asuddhiṁ maññisaṁ suddhiṁ,",
  "thag5.6:3.4_0": "andhabhūto aviddasu.",
  "thag5.6:4.1_0": "Micchādiṭṭhi pahīnā me,",
  "thag5.6:4.2_0": "bhavā sabbe padālitā;",
  "thag5.6:4.3_0": "Juhāmi dakkhiṇeyyaggiṁ,",
  "thag5.6:4.4_0": "namassāmi tathāgataṁ.",
  "thag5.6:5.1_0": "Mohā sabbe pahīnā me,",
  "thag5.6:5.2_0": "bhavataṇhā padālitā;",
  "thag5.6:5.3_0": "Vikkhīṇo jātisaṁsāro,",
  "thag5.6:5.4_0": "natthi dāni punabbhavo”ti.",
  "thag5.6:5.5_0": "… Nadīkassapo thero …."
}