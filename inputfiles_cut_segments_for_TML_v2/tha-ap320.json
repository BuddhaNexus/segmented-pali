{
  "tha-ap320:0.1_0": "Therāpadāna",
  "tha-ap320:0.2_0": "Ārakkhadāyakavagga",
  "tha-ap320:0.3_0": "8. Tiraṁsiyattheraapadāna",
  "tha-ap320:1.1_0": "“Kesariṁ abhijātaṁva,",
  "tha-ap320:1.2_0": "aggikkhandhaṁva pabbate;",
  "tha-ap320:1.3_0": "Obhāsentaṁ disā sabbā,",
  "tha-ap320:1.4_0": "siddhatthaṁ pabbatantare.",
  "tha-ap320:2.1_0": "Sūriyassa ca ālokaṁ,",
  "tha-ap320:2.2_0": "candālokaṁ tatheva ca;",
  "tha-ap320:2.3_0": "Buddhālokañca disvāna,",
  "tha-ap320:2.4_0": "vitti me udapajjatha.",
  "tha-ap320:3.1_0": "Tayo āloke disvāna,",
  "tha-ap320:3.2_0": "sambuddhaṁ sāvakuttamaṁ;",
  "tha-ap320:3.3_0": "Ekaṁsaṁ ajinaṁ katvā,",
  "tha-ap320:3.4_0": "santhaviṁ lokanāyakaṁ.",
  "tha-ap320:4.1_0": "Tayo hi ālokakarā,",
  "tha-ap320:4.2_0": "loke lokatamonudā;",
  "tha-ap320:4.3_0": "Cando ca sūriyo cāpi,",
  "tha-ap320:4.4_0": "buddho ca lokanāyako.",
  "tha-ap320:5.1_0": "Opammaṁ upadassetvā,",
  "tha-ap320:5.2_0": "kittito me mahāmuni;",
  "tha-ap320:5.3_0": "Buddhassa vaṇṇaṁ kittetvā,",
  "tha-ap320:5.4_0": "kappaṁ saggamhi modahaṁ.",
  "tha-ap320:6.1_0": "Catunnavutito kappe,",
  "tha-ap320:6.2_0": "yaṁ buddhamabhikittayiṁ;",
  "tha-ap320:6.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap320:6.4_0": "kittanāya idaṁ phalaṁ.",
  "tha-ap320:7.1_0": "Ekasaṭṭhimhito kappe,",
  "tha-ap320:7.2_0": "eko ñāṇadharo ahu;",
  "tha-ap320:7.3_0": "Sattaratanasampanno,",
  "tha-ap320:7.4_0": "cakkavattī mahabbalo.",
  "tha-ap320:8.1_0": "Paṭisambhidā catasso,",
  "tha-ap320:8.2_0": "…pe…",
  "tha-ap320:8.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap320:9.1_0": "Itthaṁ sudaṁ āyasmā tiraṁsiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap320:10.1_0": "Tiraṁsiyattherassāpadānaṁ aṭṭhamaṁ."
}