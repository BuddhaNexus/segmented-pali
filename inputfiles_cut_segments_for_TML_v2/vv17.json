{
  "vv17:0.1_0": "Vimānavatthu",
  "vv17:0.2_0": "Itthivimāna",
  "vv17:0.3_0": "Pīṭhavagga",
  "vv17:0.4_0": "17. Kesakārīvimānavatthu",
  "vv17:1.1_0": "“Idaṁ vimānaṁ ruciraṁ pabhassaraṁ,",
  "vv17:1.2_0": "Veḷuriyathambhaṁ satataṁ sunimmitaṁ;",
  "vv17:1.3_0": "Suvaṇṇarukkhehi samantamotthataṁ,",
  "vv17:1.4_0": "Ṭhānaṁ mamaṁ kammavipākasambhavaṁ.",
  "vv17:2.1_0": "Tatrūpapannā purimaccharā imā,",
  "vv17:2.2_0": "Sataṁ sahassāni sakena kammunā;",
  "vv17:2.3_0": "Tuvaṁsi ajjhupagatā yasassinī,",
  "vv17:2.4_0": "Obhāsayaṁ tiṭṭhasi pubbadevatā.",
  "vv17:3.1_0": "Sasī adhiggayha yathā virocati,",
  "vv17:3.2_0": "Nakkhattarājāriva tārakāgaṇaṁ;",
  "vv17:3.3_0": "Tatheva tvaṁ accharāsaṅgaṇaṁ imaṁ,",
  "vv17:3.4_0": "Daddallamānā yasasā virocasi.",
  "vv17:4.1_0": "Kuto nu āgamma anomadassane,",
  "vv17:4.2_0": "Upapannā tvaṁ bhavanaṁ mamaṁ idaṁ;",
  "vv17:4.3_0": "Brahmaṁva devā tidasā sahindakā,",
  "vv17:4.4_0": "Sabbe na tappāmase dassanena tan”ti.",
  "vv17:5.1_0": "“Yametaṁ sakka anupucchase mamaṁ,",
  "vv17:5.2_0": "‘Kuto cutā tvaṁ idha āgatā’ti;",
  "vv17:5.3_0": "Bārāṇasī nāma puratthi kāsinaṁ,",
  "vv17:5.4_0": "Tattha ahosiṁ pure kesakārikā.",
  "vv17:6.1_0": "Buddhe ca dhamme ca pasannamānasā,",
  "vv17:6.2_0": "Saṅghe ca ekantagatā asaṁsayā;",
  "vv17:6.3_0": "Akhaṇḍasikkhāpadā āgatapphalā,",
  "vv17:6.4_0": "Sambodhidhamme niyatā anāmayā”ti.",
  "vv17:7.1_0": "“Tantyābhinandāmase svāgatañca te,",
  "vv17:7.2_0": "Dhammena ca tvaṁ yasasā virocasi;",
  "vv17:7.3_0": "Buddhe ca dhamme ca pasannamānase,",
  "vv17:7.4_0": "Saṅghe ca ekantagate asaṁsaye;",
  "vv17:7.5_0": "Akhaṇḍasikkhāpade āgatapphale,",
  "vv17:7.6_0": "Sambodhidhamme niyate anāmaye”ti.",
  "vv17:8.1_0": "Kesakārīvimānaṁ sattarasamaṁ.",
  "vv17:9.1_0": "Tassuddānaṁ",
  "vv17:10.1_0": "Pañca pīṭhā tayo nāvā,",
  "vv17:10.2_0": "dīpatiladakkhiṇā dve;",
  "vv17:10.3_0": "Pati dve suṇisā uttarā,",
  "vv17:10.4_0": "sirimā kesakārikā;",
  "vv17:10.5_0": "Vaggo tena pavuccatīti.",
  "vv17:11.1_0": "Itthivimāne paṭhamo vaggo."
}