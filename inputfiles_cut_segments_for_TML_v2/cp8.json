{
  "cp8:0.1_0": "Cariyāpiṭaka",
  "cp8:0.2_0": "Akittivagga",
  "cp8:0.3_0": "Dānapāramī 8",
  "cp8:0.4_0": "Sivirājacariya",
  "cp8:1.1_0": "“Ariṭṭhasavhaye nagare,",
  "cp8:1.2_0": "sivināmāsi khattiyo;",
  "cp8:1.3_0": "Nisajja pāsādavare,",
  "cp8:1.4_0": "evaṁ cintesahaṁ tadā.",
  "cp8:2.1_0": "‘Yaṁ kiñci mānusaṁ dānaṁ,",
  "cp8:2.2_0": "adinnaṁ me na vijjati;",
  "cp8:2.3_0": "Yopi yāceyya maṁ cakkhuṁ,",
  "cp8:2.4_0": "dadeyyaṁ avikampito’.",
  "cp8:3.1_0": "Mama saṅkappamaññāya,",
  "cp8:3.2_0": "sakko devānamissaro;",
  "cp8:3.3_0": "Nisinno devaparisāya,",
  "cp8:3.4_0": "idaṁ vacanamabravi.",
  "cp8:4.1_0": "‘Nisajja pāsādavare,",
  "cp8:4.2_0": "sivirājā mahiddhiko;",
  "cp8:4.3_0": "Cintento vividhaṁ dānaṁ,",
  "cp8:4.4_0": "adeyyaṁ so na passati.",
  "cp8:5.1_0": "Tathaṁ nu vitathaṁ netaṁ,",
  "cp8:5.2_0": "handa vīmaṁsayāmi taṁ;",
  "cp8:5.3_0": "Muhuttaṁ āgameyyātha,",
  "cp8:5.4_0": "yāva jānāmi taṁ manaṁ’.",
  "cp8:6.1_0": "Pavedhamāno palitasiro,",
  "cp8:6.2_0": "Valigatto jarāturo;",
  "cp8:6.3_0": "Andhavaṇṇova hutvāna,",
  "cp8:6.4_0": "Rājānaṁ upasaṅkami.",
  "cp8:7.1_0": "So tadā paggahetvāna,",
  "cp8:7.2_0": "vāmaṁ dakkhiṇabāhu ca;",
  "cp8:7.3_0": "Sirasmiṁ añjaliṁ katvā,",
  "cp8:7.4_0": "idaṁ vacanamabravi.",
  "cp8:8.1_0": "‘Yācāmi taṁ mahārāja,",
  "cp8:8.2_0": "dhammika raṭṭhavaḍḍhana;",
  "cp8:8.3_0": "Tava dānaratā kitti,",
  "cp8:8.4_0": "uggatā devamānuse.",
  "cp8:9.1_0": "Ubhopi nettā nayanā,",
  "cp8:9.2_0": "andhā upahatā mama;",
  "cp8:9.3_0": "Ekaṁ me nayanaṁ dehi,",
  "cp8:9.4_0": "tvampi ekena yāpaya’.",
  "cp8:10.1_0": "Tassāhaṁ vacanaṁ sutvā,",
  "cp8:10.2_0": "haṭṭho saṁviggamānaso;",
  "cp8:10.3_0": "Katañjalī vedajāto,",
  "cp8:10.4_0": "idaṁ vacanamabraviṁ.",
  "cp8:11.1_0": "‘Idānāhaṁ cintayitvāna,",
  "cp8:11.2_0": "pāsādato idhāgato;",
  "cp8:11.3_0": "Tvaṁ mama cittamaññāya,",
  "cp8:11.4_0": "nettaṁ yācitumāgato.",
  "cp8:12.1_0": "Aho me mānasaṁ siddhaṁ,",
  "cp8:12.2_0": "saṅkappo paripūrito;",
  "cp8:12.3_0": "Adinnapubbaṁ dānavaraṁ,",
  "cp8:12.4_0": "ajja dassāmi yācake.",
  "cp8:13.1_0": "Ehi sivaka uṭṭhehi,",
  "cp8:13.2_0": "mā dandhayi mā pavedhayi;",
  "cp8:13.3_0": "Ubhopi nayanaṁ dehi,",
  "cp8:13.4_0": "uppāṭetvā vaṇibbake’.",
  "cp8:14.1_0": "Tato so codito mayhaṁ,",
  "cp8:14.2_0": "sivako vacanaṁ karo;",
  "cp8:14.3_0": "Uddharitvāna pādāsi,",
  "cp8:14.4_0": "tālamiñjaṁva yācake.",
  "cp8:15.1_0": "Dadamānassa dentassa,",
  "cp8:15.2_0": "dinnadānassa me sato;",
  "cp8:15.3_0": "Cittassa aññathā natthi,",
  "cp8:15.4_0": "bodhiyāyeva kāraṇā.",
  "cp8:16.1_0": "Na me dessā ubho cakkhū,",
  "cp8:16.2_0": "attā na me na dessiyo;",
  "cp8:16.3_0": "Sabbaññutaṁ piyaṁ mayhaṁ,",
  "cp8:16.4_0": "tasmā cakkhuṁ adāsahan”ti.",
  "cp8:17.1_0": "Sivirājacariyaṁ aṭṭhamaṁ."
}