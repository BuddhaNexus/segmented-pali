{
  "tha-ap533:0.1_0": "Therāpadāna",
  "tha-ap533:0.2_0": "Kaccāyanavagga",
  "tha-ap533:0.3_0": "1 Mahākaccāyanattheraapadāna",
  "tha-ap533:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap533:1.2_0": "anejo ajitaṁ jayo;",
  "tha-ap533:1.3_0": "Satasahasse kappānaṁ,",
  "tha-ap533:1.4_0": "ito uppajji nāyako.",
  "tha-ap533:2.1_0": "Vīro kamalapattakkho,",
  "tha-ap533:2.2_0": "sasaṅkavimalānano;",
  "tha-ap533:2.3_0": "Kanakācalasaṅkāso,",
  "tha-ap533:2.4_0": "ravidittisamappabho.",
  "tha-ap533:3.1_0": "Sattanettamanohārī,",
  "tha-ap533:3.2_0": "varalakkhaṇabhūsito;",
  "tha-ap533:3.3_0": "Sabbavākyapathātīto,",
  "tha-ap533:3.4_0": "manujāmarasakkato.",
  "tha-ap533:4.1_0": "Sambuddho bodhayaṁ satte,",
  "tha-ap533:4.2_0": "vāgīso madhurassaro;",
  "tha-ap533:4.3_0": "Karuṇānibandhasantāno,",
  "tha-ap533:4.4_0": "parisāsu visārado.",
  "tha-ap533:5.1_0": "Deseti madhuraṁ dhammaṁ,",
  "tha-ap533:5.2_0": "catusaccūpasaṁhitaṁ;",
  "tha-ap533:5.3_0": "Nimugge mohapaṅkamhi,",
  "tha-ap533:5.4_0": "samuddharati pāṇine.",
  "tha-ap533:6.1_0": "Tadā ekacaro hutvā,",
  "tha-ap533:6.2_0": "tāpaso himavālayo;",
  "tha-ap533:6.3_0": "Nabhasā mānusaṁ lokaṁ,",
  "tha-ap533:6.4_0": "gacchanto jinamaddasaṁ.",
  "tha-ap533:7.1_0": "Upecca santikaṁ tassa,",
  "tha-ap533:7.2_0": "assosiṁ dhammadesanaṁ;",
  "tha-ap533:7.3_0": "Vaṇṇayantassa vīrassa,",
  "tha-ap533:7.4_0": "sāvakassa mahāguṇaṁ.",
  "tha-ap533:8.1_0": "‘Saṅkhittena mayā vuttaṁ,",
  "tha-ap533:8.2_0": "vitthārena pakāsayaṁ;",
  "tha-ap533:8.3_0": "Parisaṁ mañca toseti,",
  "tha-ap533:8.4_0": "yathā kaccāyano ayaṁ.",
  "tha-ap533:9.1_0": "Nāhaṁ evamidhekaccaṁ,",
  "tha-ap533:9.2_0": "aññaṁ passāmi sāvakaṁ;",
  "tha-ap533:9.3_0": "Tasmātadagge esaggo,",
  "tha-ap533:9.4_0": "evaṁ dhāretha bhikkhavo’.",
  "tha-ap533:10.1_0": "Tadāhaṁ vimhito hutvā,",
  "tha-ap533:10.2_0": "sutvā vākyaṁ manoramaṁ;",
  "tha-ap533:10.3_0": "Himavantaṁ gamitvāna,",
  "tha-ap533:10.4_0": "āhitvā pupphasañcayaṁ.",
  "tha-ap533:11.1_0": "Pūjetvā lokasaraṇaṁ,",
  "tha-ap533:11.2_0": "taṁ ṭhānamabhipatthayiṁ;",
  "tha-ap533:11.3_0": "Tadā mamāsayaṁ ñatvā,",
  "tha-ap533:11.4_0": "byākāsi sa raṇañjaho.",
  "tha-ap533:12.1_0": "‘Passathetaṁ isivaraṁ,",
  "tha-ap533:12.2_0": "niddhantakanakattacaṁ;",
  "tha-ap533:12.3_0": "Uddhaggalomaṁ pīṇaṁsaṁ,",
  "tha-ap533:12.4_0": "acalaṁ pañjaliṁ ṭhitaṁ.",
  "tha-ap533:13.1_0": "Hāsaṁ supuṇṇanayanaṁ,",
  "tha-ap533:13.2_0": "buddhavaṇṇagatāsayaṁ;",
  "tha-ap533:13.3_0": "Dhammajaṁ uggahadayaṁ,",
  "tha-ap533:13.4_0": "amatāsittasannibhaṁ’.",
  "tha-ap533:14.1_0": "Kaccānassa guṇaṁ sutvā,",
  "tha-ap533:14.2_0": "taṁ ṭhānaṁ patthayaṁ ṭhito;",
  "tha-ap533:14.3_0": "Anāgatamhi addhāne,",
  "tha-ap533:14.4_0": "gotamassa mahāmune.",
  "tha-ap533:15.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap533:15.2_0": "oraso dhammanimmito;",
  "tha-ap533:15.3_0": "Kaccāno nāma nāmena,",
  "tha-ap533:15.4_0": "hessati satthu sāvako.",
  "tha-ap533:16.1_0": "Bahussuto mahāñāṇī,",
  "tha-ap533:16.2_0": "adhippāyavidū mune;",
  "tha-ap533:16.3_0": "Pāpuṇissati taṁ ṭhānaṁ,",
  "tha-ap533:16.4_0": "yathāyaṁ byākato mayā.",
  "tha-ap533:17.1_0": "Satasahassito kappe,",
  "tha-ap533:17.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap533:17.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap533:17.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap533:18.1_0": "Duve bhave saṁsarāmi,",
  "tha-ap533:18.2_0": "devatte atha mānuse;",
  "tha-ap533:18.3_0": "Aññaṁ gatiṁ na gacchāmi,",
  "tha-ap533:18.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap533:19.1_0": "Duve kule pajāyāmi,",
  "tha-ap533:19.2_0": "khattiye atha brāhmaṇe;",
  "tha-ap533:19.3_0": "Nīce kule na jāyāmi,",
  "tha-ap533:19.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap533:20.1_0": "Pacchime ca bhave dāni,",
  "tha-ap533:20.2_0": "jāto ujjeniyaṁ pure;",
  "tha-ap533:20.3_0": "Pajjotassa ca caṇḍassa,",
  "tha-ap533:20.4_0": "purohitadijādhino.",
  "tha-ap533:21.1_0": "Putto tiriṭivacchassa,",
  "tha-ap533:21.2_0": "nipuṇo vedapāragū;",
  "tha-ap533:21.3_0": "Mātā ca candimā nāma,",
  "tha-ap533:21.4_0": "kaccānohaṁ varattaco.",
  "tha-ap533:22.1_0": "Vīmaṁsanatthaṁ buddhassa,",
  "tha-ap533:22.2_0": "bhūmipālena pesito;",
  "tha-ap533:22.3_0": "Disvā mokkhapuradvāraṁ,",
  "tha-ap533:22.4_0": "nāyakaṁ guṇasañcayaṁ.",
  "tha-ap533:23.1_0": "Sutvā ca vimalaṁ vākyaṁ,",
  "tha-ap533:23.2_0": "gatipaṅkavisosanaṁ;",
  "tha-ap533:23.3_0": "Pāpuṇiṁ amataṁ santaṁ,",
  "tha-ap533:23.4_0": "sesehi saha sattahi.",
  "tha-ap533:24.1_0": "Adhippāyavidū jāto,",
  "tha-ap533:24.2_0": "sugatassa mahāmate;",
  "tha-ap533:24.3_0": "Ṭhapito etadagge ca,",
  "tha-ap533:24.4_0": "susamiddhamanoratho.",
  "tha-ap533:25.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap533:25.2_0": "bhavā sabbe samūhatā;",
  "tha-ap533:25.3_0": "Nāgova bandhanaṁ chetvā,",
  "tha-ap533:25.4_0": "viharāmi anāsavo.",
  "tha-ap533:26.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap533:26.2_0": "mama buddhassa santike;",
  "tha-ap533:26.3_0": "Tisso vijjā anuppattā,",
  "tha-ap533:26.4_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap533:27.1_0": "Paṭisambhidā catasso,",
  "tha-ap533:27.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap533:27.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap533:27.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap533:28.1_0": "Itthaṁ sudaṁ āyasmā mahākaccāyano thero imā gāthāyo abhāsitthāti.",
  "tha-ap533:29.1_0": "Mahākaccāyanattherassāpadānaṁ paṭhamaṁ."
}