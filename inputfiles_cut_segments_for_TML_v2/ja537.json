{
  "ja537:0.1_0": "Jātaka",
  "ja537:0.2_0": "Asītinipāta",
  "ja537:0.3_0": "Cūḷahaṁsavagga",
  "ja537:0.4_0": "5. Mahāsutasomajātaka",
  "ja537:1.1_0": "“Kasmā tuvaṁ rasaka edisāni,",
  "ja537:1.2_0": "Karosi kammāni sudāruṇāni;",
  "ja537:1.3_0": "Hanāsi itthī purise ca mūḷho,",
  "ja537:1.4_0": "Maṁsassa hetu adu dhanassa kāraṇā”.",
  "ja537:2.1_0": "“Na attahetū na dhanassa kāraṇā,",
  "ja537:2.2_0": "Na puttadārassa sahāyañātinaṁ;",
  "ja537:2.3_0": "Bhattā ca me bhagavā bhūmipālo,",
  "ja537:2.4_0": "So khādati maṁsaṁ bhadantedisaṁ”.",
  "ja537:3.1_0": "“Sace tuvaṁ bhatturatthe payutto,",
  "ja537:3.2_0": "Karosi kammāni sudāruṇāni;",
  "ja537:3.3_0": "Pātova antepuraṁ pāpuṇitvā,",
  "ja537:3.4_0": "Lapeyyāsi me rājino sammukhe taṁ”.",
  "ja537:4.1_0": "“Tathā karissāmi ahaṁ bhadante,",
  "ja537:4.2_0": "Yathā tuvaṁ bhāsasi kāḷahatthi;",
  "ja537:4.3_0": "Pātova antepuraṁ pāpuṇitvā,",
  "ja537:4.4_0": "Vakkhāmi te rājino sammukhe taṁ”.",
  "ja537:5.1_0": "Tato ratyā vivasāne,",
  "ja537:5.2_0": "sūriyuggamanaṁ pati;",
  "ja537:5.3_0": "Kāḷo rasakamādāya,",
  "ja537:5.4_0": "rājānaṁ upasaṅkami;",
  "ja537:5.5_0": "Upasaṅkamma rājānaṁ,",
  "ja537:5.6_0": "idaṁ vacanamabravi.",
  "ja537:6.1_0": "“Saccaṁ kira mahārāja,",
  "ja537:6.2_0": "rasako pesito tayā;",
  "ja537:6.3_0": "Hanati itthipurise,",
  "ja537:6.4_0": "tuvaṁ maṁsāni khādasi”.",
  "ja537:7.1_0": "“Evameva tathā kāḷa,",
  "ja537:7.2_0": "rasako pesito mayā;",
  "ja537:7.3_0": "Mama atthaṁ karontassa,",
  "ja537:7.4_0": "kimetaṁ paribhāsasi”.",
  "ja537:8.1_0": "“Ānando sabbamacchānaṁ,",
  "ja537:8.2_0": "khāditvā rasagiddhimā;",
  "ja537:8.3_0": "Parikkhīṇāya parisāya,",
  "ja537:8.4_0": "attānaṁ khādiyā mato.",
  "ja537:9.1_0": "Evaṁ pamatto rasagārave ratto,",
  "ja537:9.2_0": "Bālo yadī āyati nāvabujjhati;",
  "ja537:9.3_0": "Vidhamma putte caji ñātake ca,",
  "ja537:9.4_0": "Parivattiya attānaññeva khādati.",
  "ja537:10.1_0": "Idaṁ te sutvāna vigetu chando,",
  "ja537:10.2_0": "Mā bhakkhayī rāja manussamaṁsaṁ;",
  "ja537:10.3_0": "Mā tvaṁ imaṁ kevalaṁ vārijova,",
  "ja537:10.4_0": "Dvipadādhipa suññamakāsi raṭṭhaṁ”.",
  "ja537:11.1_0": "“Sujāto nāma nāmena,",
  "ja537:11.2_0": "oraso tassa atrajo;",
  "ja537:11.3_0": "Jambupesimaladdhāna,",
  "ja537:11.4_0": "mato so tassa saṅkhaye.",
  "ja537:12.1_0": "Evameva ahaṁ kāḷa,",
  "ja537:12.2_0": "bhutvā bhakkhaṁ rasuttamaṁ;",
  "ja537:12.3_0": "Aladdhā mānusaṁ maṁsaṁ,",
  "ja537:12.4_0": "maññe hissāmi jīvitaṁ”.",
  "ja537:13.1_0": "“Māṇava abhirūposi,",
  "ja537:13.2_0": "kule jātosi sotthiye;",
  "ja537:13.3_0": "Na tvaṁ arahasi tāta,",
  "ja537:13.4_0": "abhakkhaṁ bhakkhayetave”.",
  "ja537:14.1_0": "“Rasānaṁ aññataraṁ etaṁ,",
  "ja537:14.2_0": "kasmā maṁ tvaṁ nivāraye;",
  "ja537:14.3_0": "Sohaṁ tattha gamissāmi,",
  "ja537:14.4_0": "yattha lacchāmi edisaṁ.",
  "ja537:15.1_0": "Sovāhaṁ nippatissāmi,",
  "ja537:15.2_0": "na te vacchāmi santike;",
  "ja537:15.3_0": "Yassa me dassanena tvaṁ,",
  "ja537:15.4_0": "nābhinandasi brāhmaṇa”.",
  "ja537:16.1_0": "“Addhā aññepi dāyāde,",
  "ja537:16.2_0": "putte lacchāma māṇava;",
  "ja537:16.3_0": "Tvañca jamma vinassassu,",
  "ja537:16.4_0": "yattha pattaṁ na taṁ suṇe”.",
  "ja537:17.1_0": "“Evameva tuvaṁ rāja,",
  "ja537:17.2_0": "dvipadinda suṇohi me;",
  "ja537:17.3_0": "Pabbājessanti taṁ raṭṭhā,",
  "ja537:17.4_0": "soṇḍaṁ māṇavakaṁ yathā”.",
  "ja537:18.1_0": "“Sujāto nāma nāmena,",
  "ja537:18.2_0": "bhāvitattāna sāvako;",
  "ja537:18.3_0": "Accharaṁ kāmayantova,",
  "ja537:18.4_0": "na so bhuñji na so pivi.",
  "ja537:19.1_0": "Kusaggenudakamādāya,",
  "ja537:19.2_0": "samudde udakaṁ mine;",
  "ja537:19.3_0": "Evaṁ mānusakā kāmā,",
  "ja537:19.4_0": "dibbakāmāna santike.",
  "ja537:20.1_0": "Evameva ahaṁ kāḷa,",
  "ja537:20.2_0": "bhutvā bhakkhaṁ rasuttamaṁ;",
  "ja537:20.3_0": "Aladdhā mānusaṁ maṁsaṁ,",
  "ja537:20.4_0": "maññe hissāmi jīvitaṁ”.",
  "ja537:21.1_0": "“Yathāpi te dhataraṭṭhā,",
  "ja537:21.2_0": "haṁsā vehāyasaṅgamā;",
  "ja537:21.3_0": "Abhuttaparibhogena,",
  "ja537:21.4_0": "sabbe abbhatthataṁ gatā.",
  "ja537:22.1_0": "Evameva tuvaṁ rāja,",
  "ja537:22.2_0": "dvipadinda suṇohi me;",
  "ja537:22.3_0": "Abhakkhaṁ rāja bhakkhesi,",
  "ja537:22.4_0": "tasmā pabbājayanti taṁ”.",
  "ja537:23.1_0": "“Tiṭṭhāhīti mayā vutto,",
  "ja537:23.2_0": "So tvaṁ gacchasi pammukho;",
  "ja537:23.3_0": "Aṭṭhito tvaṁ ṭhitomhīti,",
  "ja537:23.4_0": "Lapasi brahmacārini;",
  "ja537:23.5_0": "Idaṁ te samaṇāyuttaṁ,",
  "ja537:23.6_0": "Asiñca me maññasi kaṅkapattaṁ”.",
  "ja537:24.1_0": "“Ṭhitohamasmī sadhammesu rāja,",
  "ja537:24.2_0": "Na nāmagottaṁ parivattayāmi;",
  "ja537:24.3_0": "Corañca loke aṭhitaṁ vadanti,",
  "ja537:24.4_0": "Āpāyikaṁ nerayikaṁ ito cutaṁ.",
  "ja537:25.1_0": "Sace tvaṁ saddahasi rāja,",
  "ja537:25.2_0": "sutaṁ gaṇhāhi khattiya;",
  "ja537:25.3_0": "Tena yaññaṁ yajitvāna,",
  "ja537:25.4_0": "evaṁ saggaṁ gamissasi”.",
  "ja537:26.1_0": "“Kismiṁ nu raṭṭhe tava jātibhūmi,",
  "ja537:26.2_0": "Atha kena atthena idhānupatto;",
  "ja537:26.3_0": "Akkhāhi me brāhmaṇa etamatthaṁ,",
  "ja537:26.4_0": "Kimicchasī demi tayajja patthitaṁ”.",
  "ja537:27.1_0": "“Gāthā catasso dharaṇīmahissara,",
  "ja537:27.2_0": "Sugambhiratthā varasāgarūpamā;",
  "ja537:27.3_0": "Taveva atthāya idhāgatosmi,",
  "ja537:27.4_0": "Suṇohi gāthā paramatthasaṁhitā”.",
  "ja537:28.1_0": "“Na ve rudanti matimanto sapaññā,",
  "ja537:28.2_0": "Bahussutā ye bahuṭhānacintino;",
  "ja537:28.3_0": "Dīpañhi etaṁ paramaṁ narānaṁ,",
  "ja537:28.4_0": "Yaṁ paṇḍitā sokanudā bhavanti.",
  "ja537:29.1_0": "Attānaṁ ñātī udāhu puttadāraṁ,",
  "ja537:29.2_0": "Dhaññaṁ dhanaṁ rajataṁ jātarūpaṁ;",
  "ja537:29.3_0": "Kimeva tvaṁ sutasomānutappe,",
  "ja537:29.4_0": "Korabyaseṭṭha vacanaṁ suṇoma tetaṁ”.",
  "ja537:30.1_0": "“Nevāhamattānamanutthunāmi,",
  "ja537:30.2_0": "Na puttadāraṁ na dhanaṁ na raṭṭhaṁ;",
  "ja537:30.3_0": "Satañca dhammo carito purāṇo,",
  "ja537:30.4_0": "Taṁ saṅkaraṁ brāhmaṇassānutappe.",
  "ja537:31.1_0": "Kato mayā saṅkaro brāhmaṇena,",
  "ja537:31.2_0": "Raṭṭhe sake issariye ṭhitena;",
  "ja537:31.3_0": "Taṁ saṅkaraṁ brāhmaṇasappadāya,",
  "ja537:31.4_0": "Saccānurakkhī punarāvajissaṁ”.",
  "ja537:32.1_0": "“Nevāhametaṁ abhisaddahāmi,",
  "ja537:32.2_0": "Sukhī naro maccumukhā pamutto;",
  "ja537:32.3_0": "Amittahatthaṁ punarāvajeyya,",
  "ja537:32.4_0": "Korabyaseṭṭha na hi maṁ upesi.",
  "ja537:33.1_0": "Mutto tuvaṁ porisādassa hatthā,",
  "ja537:33.2_0": "Gantvā sakaṁ mandiraṁ kāmakāmī;",
  "ja537:33.3_0": "Madhuraṁ piyaṁ jīvitaṁ laddha rāja,",
  "ja537:33.4_0": "Kuto tuvaṁ ehisi me sakāsaṁ”.",
  "ja537:34.1_0": "“Mataṁ vareyya parisuddhasīlo,",
  "ja537:34.2_0": "Na jīvitaṁ garahito pāpadhammo;",
  "ja537:34.3_0": "Na hi taṁ naraṁ tāyati duggatīhi,",
  "ja537:34.4_0": "Yassāpi hetu alikaṁ bhaṇeyya.",
  "ja537:35.1_0": "Sacepi vāto girimāvaheyya,",
  "ja537:35.2_0": "Cando ca suriyo ca chamā pateyyuṁ;",
  "ja537:35.3_0": "Sabbā ca najjo paṭisotaṁ vajeyyuṁ,",
  "ja537:35.4_0": "Na tvevahaṁ rāja musā bhaṇeyyaṁ.",
  "ja537:36.1_0": "Nabhaṁ phaleyya udadhīpi susse,",
  "ja537:36.2_0": "Saṁvaṭṭaye bhūtadharā vasundharā;",
  "ja537:36.3_0": "Siluccayo meru samūlamuppate,",
  "ja537:36.4_0": "Na tvevahaṁ rāja musā bhaṇeyyaṁ.",
  "ja537:37.1_0": "Asiñca sattiñca parāmasāmi,",
  "ja537:37.2_0": "Sapathampi te samma ahaṁ karomi;",
  "ja537:37.3_0": "Tayā pamutto anaṇo bhavitvā,",
  "ja537:37.4_0": "Saccānurakkhī punarāvajissaṁ”.",
  "ja537:38.1_0": "“Yo te kato saṅgaro brāhmaṇena,",
  "ja537:38.2_0": "Raṭṭhe sake issariye ṭhitena;",
  "ja537:38.3_0": "Taṁ saṅgaraṁ brāhmaṇasappadāya,",
  "ja537:38.4_0": "Saccānurakkhī punarāvajassu”.",
  "ja537:39.1_0": "“Yo me kato saṅgaro brāhmaṇena,",
  "ja537:39.2_0": "Raṭṭhe sake issariye ṭhitena;",
  "ja537:39.3_0": "Taṁ saṅgaraṁ brāhmaṇasappadāya,",
  "ja537:39.4_0": "Saccānurakkhī punarāvajissaṁ”.",
  "ja537:40.1_0": "Mutto ca so porisādassa hatthā,",
  "ja537:40.2_0": "Gantvāna taṁ brāhmaṇaṁ etadavoca;",
  "ja537:40.3_0": "“Suṇoma gāthāyo satārahāyo,",
  "ja537:40.4_0": "Yā me sutā assu hitāya brahme”.",
  "ja537:41.1_0": "“Sakideva sutasoma,",
  "ja537:41.2_0": "sabbhi hoti samāgamo;",
  "ja537:41.3_0": "Sā naṁ saṅgati pāleti,",
  "ja537:41.4_0": "nāsabbhi bahu saṅgamo.",
  "ja537:42.1_0": "Sabbhireva samāsetha,",
  "ja537:42.2_0": "sabbhi kubbetha santhavaṁ;",
  "ja537:42.3_0": "Sataṁ saddhammamaññāya,",
  "ja537:42.4_0": "seyyo hoti na pāpiyo.",
  "ja537:43.1_0": "Jīranti ve rājarathā sucittā,",
  "ja537:43.2_0": "Atho sarīrampi jaraṁ upeti;",
  "ja537:43.3_0": "Satañca dhammo na jaraṁ upeti,",
  "ja537:43.4_0": "Santo have sabbhi pavedayanti.",
  "ja537:44.1_0": "Nabhañca dūre pathavī ca dūre,",
  "ja537:44.2_0": "Pāraṁ samuddassa tadāhu dūre;",
  "ja537:44.3_0": "Tato have dūrataraṁ vadanti,",
  "ja537:44.4_0": "Satañca dhammo asatañca rāja”.",
  "ja537:45.1_0": "“Sahassiyā imā gāthā,",
  "ja537:45.2_0": "nahimā gāthā satārahā;",
  "ja537:45.3_0": "Cattāri tvaṁ sahassāni,",
  "ja537:45.4_0": "khippaṁ gaṇhāhi brāhmaṇa”.",
  "ja537:46.1_0": "“Āsītiyā nāvutiyā ca gāthā,",
  "ja537:46.2_0": "Satārahā cāpi bhaveyya gāthā;",
  "ja537:46.3_0": "Paccattameva sutasoma jānahi,",
  "ja537:46.4_0": "Sahassiyā nāma kā atthi gāthā”.",
  "ja537:47.1_0": "“Icchāmi vohaṁ sutavuddhimattano,",
  "ja537:47.2_0": "Santoti maṁ sappurisā bhajeyyuṁ;",
  "ja537:47.3_0": "Ahaṁ savantīhi mahodadhīva,",
  "ja537:47.4_0": "Na hi tāta tappāmi subhāsitena.",
  "ja537:48.1_0": "Aggi yathā tiṇakaṭṭhaṁ dahanto,",
  "ja537:48.2_0": "Na tappatī sāgarova nadīhi;",
  "ja537:48.3_0": "Evampi te paṇḍitā rājaseṭṭha,",
  "ja537:48.4_0": "Sutvā na tappanti subhāsitena.",
  "ja537:49.1_0": "Sakassa dāsassa yadā suṇomi,",
  "ja537:49.2_0": "Gāthaṁ ahaṁ atthavatiṁ janinda;",
  "ja537:49.3_0": "Tameva sakkacca nisāmayāmi,",
  "ja537:49.4_0": "Na hi tāta dhammesu mamatthi titti.",
  "ja537:50.1_0": "Idaṁ te raṭṭhaṁ sadhanaṁ sayoggaṁ,",
  "ja537:50.2_0": "Sakāyuraṁ sabbakāmūpapannaṁ;",
  "ja537:50.3_0": "Kiṁ kāmahetu paribhāsasi maṁ,",
  "ja537:50.4_0": "Gacchāmahaṁ porisādassa ñatte”.",
  "ja537:51.1_0": "“Attānurakkhāya bhavanti hete,",
  "ja537:51.2_0": "Hatthārohā rathikā pattikā ca;",
  "ja537:51.3_0": "Assāruhā ye ca dhanuggahāse,",
  "ja537:51.4_0": "Senaṁ payuñjāma hanāma sattuṁ”.",
  "ja537:52.1_0": "“Sudukkaraṁ porisādo akāsi,",
  "ja537:52.2_0": "Jīvaṁ gahetvāna avassajī maṁ;",
  "ja537:52.3_0": "Taṁ tādisaṁ pubbakiccaṁ saranto,",
  "ja537:52.4_0": "Dubbhe ahaṁ tassa kathaṁ janinda”.",
  "ja537:53.1_0": "Vanditvā so pitaraṁ mātarañca,",
  "ja537:53.2_0": "Anusāsetvā negamañca balañca;",
  "ja537:53.3_0": "Saccavādī saccānurakkhamāno,",
  "ja537:53.4_0": "Agamāsi so yattha porisādo.",
  "ja537:54.1_0": "“Kato mayā saṅgaro brāhmaṇena,",
  "ja537:54.2_0": "Raṭṭhe sake issariye ṭhitena;",
  "ja537:54.3_0": "Taṁ saṅgaraṁ brāhmaṇasappadāya,",
  "ja537:54.4_0": "Saccānurakkhī punarāgatosmi;",
  "ja537:54.5_0": "Yajassu yaññaṁ khāda maṁ porisāda”.",
  "ja537:55.1_0": "“Na hāyate khāditaṁ mayhaṁ pacchā,",
  "ja537:55.2_0": "Citakā ayaṁ tāva sadhūmikāva;",
  "ja537:55.3_0": "Niddhūmake pacitaṁ sādhupakkaṁ,",
  "ja537:55.4_0": "Suṇoma gāthāyo satārahāyo”.",
  "ja537:56.1_0": "“Adhammiko tvaṁ porisādakāsi,",
  "ja537:56.2_0": "Raṭṭhā ca bhaṭṭho udarassa hetu;",
  "ja537:56.3_0": "Dhammañcimā abhivadanti gāthā,",
  "ja537:56.4_0": "Dhammo ca adhammo ca kuhiṁ sameti.",
  "ja537:57.1_0": "Adhammikassa luddassa,",
  "ja537:57.2_0": "niccaṁ lohitapāṇino;",
  "ja537:57.3_0": "Natthi saccaṁ kuto dhammo,",
  "ja537:57.4_0": "kiṁ sutena karissasi”.",
  "ja537:58.1_0": "“Yo maṁsahetu migavaṁ careyya,",
  "ja537:58.2_0": "Yo vā hane purisamattahetu;",
  "ja537:58.3_0": "Ubhopi te pecca samā bhavanti,",
  "ja537:58.4_0": "Kasmā no adhammikaṁ brūsi maṁ tvaṁ”.",
  "ja537:59.1_0": "“Pañca pañca na khā bhakkhā,",
  "ja537:59.2_0": "khattiyena pajānatā;",
  "ja537:59.3_0": "Abhakkhaṁ rāja bhakkhesi,",
  "ja537:59.4_0": "tasmā adhammiko tuvaṁ”.",
  "ja537:60.1_0": "“Mutto tuvaṁ porisādassa hatthā,",
  "ja537:60.2_0": "Gantvā sakaṁ mandiraṁ kāmakāmī;",
  "ja537:60.3_0": "Amittahatthaṁ punarāgatosi,",
  "ja537:60.4_0": "Na khattadhamme kusalosi rāja”.",
  "ja537:61.1_0": "“Ye khattadhamme kusalā bhavanti,",
  "ja537:61.2_0": "Pāyena te nerayikā bhavanti;",
  "ja537:61.3_0": "Tasmā ahaṁ khattadhammaṁ pahāya,",
  "ja537:61.4_0": "Saccānurakkhī punarāgatosmi;",
  "ja537:61.5_0": "Yajassu yaññaṁ khāda maṁ porisāda”.",
  "ja537:62.1_0": "“Pāsādavāsā pathavīgavāssā,",
  "ja537:62.2_0": "Kāmitthiyo kāsikacandanañca;",
  "ja537:62.3_0": "Sabbaṁ tahiṁ labhasi sāmitāya,",
  "ja537:62.4_0": "Saccena kiṁ passasi ānisaṁsaṁ”.",
  "ja537:63.1_0": "“Ye kecime atthi rasā pathabyā,",
  "ja537:63.2_0": "Saccaṁ tesaṁ sādhutaraṁ rasānaṁ;",
  "ja537:63.3_0": "Sacce ṭhitā samaṇabrāhmaṇā ca,",
  "ja537:63.4_0": "Taranti jātimaraṇassa pāraṁ”.",
  "ja537:64.1_0": "“Mutto tuvaṁ porisādassa hatthā,",
  "ja537:64.2_0": "Gantvā sakaṁ mandiraṁ kāmakāmī;",
  "ja537:64.3_0": "Amittahatthaṁ punarāgatosi,",
  "ja537:64.4_0": "Na hi nūna te maraṇabhayaṁ janinda;",
  "ja537:64.5_0": "Alīnacitto asi saccavādī”.",
  "ja537:65.1_0": "“Katā me kalyāṇā anekarūpā,",
  "ja537:65.2_0": "Yaññā yiṭṭhā ye vipulā pasatthā;",
  "ja537:65.3_0": "Visodhito paralokassa maggo,",
  "ja537:65.4_0": "Dhamme ṭhito ko maraṇassa bhāye.",
  "ja537:66.1_0": "Katā me kalyāṇā anekarūpā,",
  "ja537:66.2_0": "Yaññā yiṭṭhā ye vipulā pasatthā;",
  "ja537:66.3_0": "Anānutappaṁ paralokaṁ gamissaṁ,",
  "ja537:66.4_0": "Yajassu yaññaṁ ada maṁ porisāda.",
  "ja537:67.1_0": "Pitā ca mātā ca upaṭṭhitā me,",
  "ja537:67.2_0": "Dhammena me issariyaṁ pasatthaṁ;",
  "ja537:67.3_0": "Visodhito paralokassa maggo,",
  "ja537:67.4_0": "Dhamme ṭhito ko maraṇassa bhāye.",
  "ja537:68.1_0": "Pitā ca mātā ca upaṭṭhitā me,",
  "ja537:68.2_0": "Dhammena me issariyaṁ pasatthaṁ;",
  "ja537:68.3_0": "Anānutappaṁ paralokaṁ gamissaṁ,",
  "ja537:68.4_0": "Yajassu yaññaṁ ada maṁ porisāda.",
  "ja537:69.1_0": "Ñātīsu mittesu katā me kārā,",
  "ja537:69.2_0": "Dhammena me issariyaṁ pasatthaṁ;",
  "ja537:69.3_0": "Visodhito paralokassa maggo,",
  "ja537:69.4_0": "Dhamme ṭhito ko maraṇassa bhāye.",
  "ja537:70.1_0": "Ñātīsu mittesu katā me kārā,",
  "ja537:70.2_0": "Dhammena me issariyaṁ pasatthaṁ;",
  "ja537:70.3_0": "Anānutappaṁ paralokaṁ gamissaṁ,",
  "ja537:70.4_0": "Yajassu yaññaṁ ada maṁ porisāda.",
  "ja537:71.1_0": "Dinnaṁ me dānaṁ bahudhā bahūnaṁ,",
  "ja537:71.2_0": "Santappitā samaṇabrāhmaṇā ca;",
  "ja537:71.3_0": "Visodhito paralokassa maggo,",
  "ja537:71.4_0": "Dhamme ṭhito ko maraṇassa bhāye.",
  "ja537:72.1_0": "Dinnaṁ me dānaṁ bahudhā bahūnaṁ,",
  "ja537:72.2_0": "Santappitā samaṇabrāhmaṇā ca;",
  "ja537:72.3_0": "Anānutappaṁ paralokaṁ gamissaṁ,",
  "ja537:72.4_0": "Yajassu yaññaṁ ada maṁ porisāda”.",
  "ja537:73.1_0": "“Visaṁ pajānaṁ puriso adeyya,",
  "ja537:73.2_0": "Āsīvisaṁ jalitamuggatejaṁ;",
  "ja537:73.3_0": "Muddhāpi tassa viphaleyya sattadhā,",
  "ja537:73.4_0": "Yo tādisaṁ saccavādiṁ adeyya.",
  "ja537:74.1_0": "Sutvā dhammaṁ vijānanti,",
  "ja537:74.2_0": "Narā kalyāṇapāpakaṁ;",
  "ja537:74.3_0": "Api gāthā suṇitvāna,",
  "ja537:74.4_0": "Dhamme me ramate mano”.",
  "ja537:75.1_0": "“Sakideva mahārāja,",
  "ja537:75.2_0": "sabbhi hoti samāgamo;",
  "ja537:75.3_0": "Sā naṁ saṅgati pāleti,",
  "ja537:75.4_0": "nāsabbhi bahu saṅgamo.",
  "ja537:76.1_0": "Sabbhireva samāsetha,",
  "ja537:76.2_0": "sabbhi kubbetha santhavaṁ;",
  "ja537:76.3_0": "Sataṁ saddhammamaññāya,",
  "ja537:76.4_0": "seyyo hoti na pāpiyo.",
  "ja537:77.1_0": "Jīranti ve rājarathā sucittā,",
  "ja537:77.2_0": "Atho sarīrampi jaraṁ upeti;",
  "ja537:77.3_0": "Satañca dhammo na jaraṁ upeti,",
  "ja537:77.4_0": "Santo have sabbhi pavedayanti.",
  "ja537:78.1_0": "Nabhañca dūre pathavī ca dūre,",
  "ja537:78.2_0": "Pāraṁ samuddassa tadāhu dūre;",
  "ja537:78.3_0": "Tato have dūrataraṁ vadanti,",
  "ja537:78.4_0": "Satañca dhammo asatañca rāja”.",
  "ja537:79.1_0": "“Gāthā imā atthavatī subyañjanā,",
  "ja537:79.2_0": "Subhāsitā tuyha janinda sutvā;",
  "ja537:79.3_0": "Ānandi vitto sumano patīto,",
  "ja537:79.4_0": "Cattāri te samma vare dadāmi”.",
  "ja537:80.1_0": "“Yo nattano maraṇaṁ bujjhasi tuvaṁ,",
  "ja537:80.2_0": "Hitāhitaṁ vinipātañca saggaṁ;",
  "ja537:80.3_0": "Giddho rase duccarite niviṭṭho,",
  "ja537:80.4_0": "Kiṁ tvaṁ varaṁ dassasi pāpadhamma.",
  "ja537:81.1_0": "Ahañca taṁ dehi varanti vajjaṁ,",
  "ja537:81.2_0": "Tvañcāpi datvāna avākareyya;",
  "ja537:81.3_0": "Sandiṭṭhikaṁ kalahamimaṁ vivādaṁ,",
  "ja537:81.4_0": "Ko paṇḍito jānamupabbajeyya”.",
  "ja537:82.1_0": "“Na taṁ varaṁ arahati jantu dātuṁ,",
  "ja537:82.2_0": "Yaṁ vāpi datvāna avākareyya;",
  "ja537:82.3_0": "Varassu samma avikampamāno,",
  "ja537:82.4_0": "Pāṇaṁ cajitvānapi dassameva”.",
  "ja537:83.1_0": "“Ariyassa ariyena sameti sakhyaṁ,",
  "ja537:83.2_0": "Paññassa paññāṇavatā sameti;",
  "ja537:83.3_0": "Passeyya taṁ vassasataṁ arogaṁ,",
  "ja537:83.4_0": "Etaṁ varānaṁ paṭhamaṁ varāmi”.",
  "ja537:84.1_0": "“Ariyassa ariyena sameti sakhyaṁ,",
  "ja537:84.2_0": "Paññassa paññāṇavatā sameti;",
  "ja537:84.3_0": "Passāsi maṁ vassasataṁ arogaṁ,",
  "ja537:84.4_0": "Etaṁ varānaṁ paṭhamaṁ dadāmi”.",
  "ja537:85.1_0": "“Ye khattiyāse idha bhūmipālā,",
  "ja537:85.2_0": "Muddhābhisittā katanāmadheyyā;",
  "ja537:85.3_0": "Na tādise bhūmipatī adesi,",
  "ja537:85.4_0": "Etaṁ varānaṁ dutiyaṁ varāmi”.",
  "ja537:86.1_0": "“Ye khattiyāse idha bhūmipālā,",
  "ja537:86.2_0": "Muddhābhisittā katanāmadheyyā;",
  "ja537:86.3_0": "Na tādise bhūmipatī ademi,",
  "ja537:86.4_0": "Etaṁ varānaṁ dutiyaṁ dadāmi”.",
  "ja537:87.1_0": "“Parosataṁ khattiyā te gahitā,",
  "ja537:87.2_0": "Talāvutā assumukhā rudantā;",
  "ja537:87.3_0": "Sake te raṭṭhe paṭipādayāhi,",
  "ja537:87.4_0": "Etaṁ varānaṁ tatiyaṁ varāmi”.",
  "ja537:88.1_0": "“Parosataṁ khattiyā me gahitā,",
  "ja537:88.2_0": "Talāvutā assumukhā rudantā;",
  "ja537:88.3_0": "Sake te raṭṭhe paṭipādayāmi,",
  "ja537:88.4_0": "Etaṁ varānaṁ tatiyaṁ dadāmi”.",
  "ja537:89.1_0": "“Chiddaṁ te raṭṭhaṁ byathitā bhayā hi,",
  "ja537:89.2_0": "Puthū narā leṇamanuppaviṭṭhā;",
  "ja537:89.3_0": "Manussamaṁsaṁ viramehi rāja,",
  "ja537:89.4_0": "Etaṁ varānaṁ catutthaṁ varāmi”.",
  "ja537:90.1_0": "“Addhā hi so bhakkho mama manāpo,",
  "ja537:90.2_0": "Etassa hetumhi vanaṁ paviṭṭho;",
  "ja537:90.3_0": "Sohaṁ kathaṁ etto upārameyyaṁ,",
  "ja537:90.4_0": "Aññaṁ varānaṁ catutthaṁ varassu”.",
  "ja537:91.1_0": "“Na ve piyaṁ meti janinda tādiso,",
  "ja537:91.2_0": "Attaṁ niraṅkacca piyāni sevati;",
  "ja537:91.3_0": "Attāva seyyo paramā ca seyyo,",
  "ja537:91.4_0": "Labbhā piyā ocitatthena pacchā”.",
  "ja537:92.1_0": "“Piyaṁ me mānusaṁ maṁsaṁ,",
  "ja537:92.2_0": "Sutasoma vijānahi;",
  "ja537:92.3_0": "Namhi sakkā nivāretuṁ,",
  "ja537:92.4_0": "Aññaṁ varaṁ samma varassu”.",
  "ja537:93.1_0": "“Yo ve piyaṁ meti piyānurakkhī,",
  "ja537:93.2_0": "Attaṁ niraṅkacca piyāni sevati;",
  "ja537:93.3_0": "Soṇḍova pitvā visamissapānaṁ,",
  "ja537:93.4_0": "Teneva so hoti dukkhī parattha.",
  "ja537:94.1_0": "Yo cīdha saṅkhāya piyāni hitvā,",
  "ja537:94.2_0": "Kicchenapi sevati ariyadhamme;",
  "ja537:94.3_0": "Dukkhitova pitvāna yathosadhāni,",
  "ja537:94.4_0": "Teneva so hoti sukhī parattha”.",
  "ja537:95.1_0": "“Ohāyahaṁ pitaraṁ mātarañca,",
  "ja537:95.2_0": "Manāpiye kāmaguṇe ca pañca;",
  "ja537:95.3_0": "Etassa hetumhi vanaṁ paviṭṭho,",
  "ja537:95.4_0": "Taṁ te varaṁ kinti mahaṁ dadāmi”.",
  "ja537:96.1_0": "“Na paṇḍitā diguṇamāhu vākyaṁ,",
  "ja537:96.2_0": "Saccappaṭiññāva bhavanti santo;",
  "ja537:96.3_0": "Varassu samma iti maṁ avoca,",
  "ja537:96.4_0": "Iccabravī tvaṁ na hi te sameti”.",
  "ja537:97.1_0": "“Apuññalābhaṁ ayasaṁ akittiṁ,",
  "ja537:97.2_0": "Pāpaṁ bahuṁ duccaritaṁ kilesaṁ;",
  "ja537:97.3_0": "Manussamaṁsassa kate upāgā,",
  "ja537:97.4_0": "Taṁ te varaṁ kinti mahaṁ dadeyyaṁ”.",
  "ja537:98.1_0": "“Na taṁ varaṁ arahati jantu dātuṁ,",
  "ja537:98.2_0": "Yaṁ vāpi datvāna avākareyya;",
  "ja537:98.3_0": "Varassu samma avikampamāno,",
  "ja537:98.4_0": "Pāṇaṁ cajitvānapi dassameva.",
  "ja537:99.1_0": "Pāṇaṁ cajanti santo nāpi dhammaṁ,",
  "ja537:99.2_0": "Saccappaṭiññāva bhavanti santo;",
  "ja537:99.3_0": "Datvā varaṁ khippamavākarohi,",
  "ja537:99.4_0": "Etena sampajja surājaseṭṭha.",
  "ja537:100.1_0": "Caje dhanaṁ aṅgavarassa hetu,",
  "ja537:100.2_0": "Aṅgaṁ caje jīvitaṁ rakkhamāno;",
  "ja537:100.3_0": "Aṅgaṁ dhanaṁ jīvitañcāpi sabbaṁ,",
  "ja537:100.4_0": "Caje naro dhammamanussaranto.",
  "ja537:101.1_0": "Yasmā hi dhammaṁ puriso vijaññā,",
  "ja537:101.2_0": "Ye cassa kaṅkhaṁ vinayanti santo;",
  "ja537:101.3_0": "Taṁ hissa dīpañca parāyaṇañca,",
  "ja537:101.4_0": "Na tena mittiṁ jirayetha pañño”.",
  "ja537:102.1_0": "“Addhā hi so bhakkho mama manāpo,",
  "ja537:102.2_0": "Etassa hetumhi vanaṁ paviṭṭho;",
  "ja537:102.3_0": "Sace ca maṁ yācasi etamatthaṁ,",
  "ja537:102.4_0": "Etampi te samma varaṁ dadāmi.",
  "ja537:103.1_0": "Satthā ca me hosi sakhā ca mesi,",
  "ja537:103.2_0": "Vacanampi te samma ahaṁ akāsiṁ;",
  "ja537:103.3_0": "Tuvampi me samma karohi vākyaṁ,",
  "ja537:103.4_0": "Ubhopi gantvāna pamocayāma”.",
  "ja537:104.1_0": "“Satthā ca te homi sakhā ca tyamhi,",
  "ja537:104.2_0": "Vacanampi me samma tuvaṁ akāsi;",
  "ja537:104.3_0": "Ahampi te samma karomi vākyaṁ,",
  "ja537:104.4_0": "Ubhopi gantvāna pamocayāma”.",
  "ja537:105.1_0": "“Kammāsapādena viheṭhitattha,",
  "ja537:105.2_0": "Talāvutā assumukhā rudantā;",
  "ja537:105.3_0": "Na jātu dubbhetha imassa rañño,",
  "ja537:105.4_0": "Saccappaṭiññaṁ me paṭissuṇātha”.",
  "ja537:106.1_0": "“Kammāsapādena viheṭhitamhā,",
  "ja537:106.2_0": "Talāvutā assumukhā rudantā;",
  "ja537:106.3_0": "Na jātu dubbhema imassa rañño,",
  "ja537:106.4_0": "Saccappaṭiññaṁ te paṭissuṇāma”.",
  "ja537:107.1_0": "“Yathā pitā vā atha vāpi mātā,",
  "ja537:107.2_0": "Anukampakā atthakāmā pajānaṁ;",
  "ja537:107.3_0": "Evameva vo hotu ayañca rājā,",
  "ja537:107.4_0": "Tumhe ca vo hotha yatheva puttā”.",
  "ja537:108.1_0": "“Yathā pitā vā atha vāpi mātā,",
  "ja537:108.2_0": "Anukampakā atthakāmā pajānaṁ;",
  "ja537:108.3_0": "Evameva no hotu ayañca rājā,",
  "ja537:108.4_0": "Mayampi hessāma yatheva puttā”.",
  "ja537:109.1_0": "“Catuppadaṁ sakuṇañcāpi maṁsaṁ,",
  "ja537:109.2_0": "Sūdehi randhaṁ sukataṁ suniṭṭhitaṁ;",
  "ja537:109.3_0": "Sudhaṁva indo paribhuñjiyāna,",
  "ja537:109.4_0": "Hitvā katheko ramasī araññe.",
  "ja537:110.1_0": "Tā khattiyā vallivilākamajjhā,",
  "ja537:110.2_0": "Alaṅkatā samparivārayitvā;",
  "ja537:110.3_0": "Indaṁva devesu pamodayiṁsu,",
  "ja537:110.4_0": "Hitvā katheko ramasī araññe.",
  "ja537:111.1_0": "Tambūpadhāne bahugoṇakamhi,",
  "ja537:111.2_0": "Subhamhi sabbassayanamhi saṅge;",
  "ja537:111.3_0": "Seyyassa majjhamhi sukhaṁ sayitvā,",
  "ja537:111.4_0": "Hitvā katheko ramasī araññe.",
  "ja537:112.1_0": "Pāṇissaraṁ kumbhathūṇaṁ nisīthe,",
  "ja537:112.2_0": "Athopi ve nippurisampi tūriyaṁ;",
  "ja537:112.3_0": "Bahuṁ sugītañca suvāditañca,",
  "ja537:112.4_0": "Hitvā katheko ramasī araññe.",
  "ja537:113.1_0": "Uyyānasampannaṁ pahūtamālyaṁ,",
  "ja537:113.2_0": "Migājinūpetapuraṁ surammaṁ;",
  "ja537:113.3_0": "Hayehi nāgehi rathehupetaṁ,",
  "ja537:113.4_0": "Hitvā katheko ramasī araññe”.",
  "ja537:114.1_0": "“Kāḷapakkhe yathā cando,",
  "ja537:114.2_0": "hāyateva suve suve;",
  "ja537:114.3_0": "Kāḷapakkhūpamo rāja,",
  "ja537:114.4_0": "asataṁ hoti samāgamo.",
  "ja537:115.1_0": "Yathāhaṁ rasakamāgamma,",
  "ja537:115.2_0": "sūdaṁ kāpurisādhamaṁ;",
  "ja537:115.3_0": "Akāsiṁ pāpakaṁ kammaṁ,",
  "ja537:115.4_0": "yena gacchāmi duggatiṁ.",
  "ja537:116.1_0": "Sukkapakkhe yathā cando,",
  "ja537:116.2_0": "vaḍḍhateva suve suve;",
  "ja537:116.3_0": "Sukkapakkhūpamo rāja,",
  "ja537:116.4_0": "sataṁ hoti samāgamo.",
  "ja537:117.1_0": "Yathāhaṁ tuvamāgamma,",
  "ja537:117.2_0": "sutasoma vijānahi;",
  "ja537:117.3_0": "Kāhāmi kusalaṁ kammaṁ,",
  "ja537:117.4_0": "yena gacchāmi suggatiṁ.",
  "ja537:118.1_0": "Thale yathā vāri janinda vuṭṭhaṁ,",
  "ja537:118.2_0": "Anaddhaneyyaṁ na ciraṭṭhitīkaṁ;",
  "ja537:118.3_0": "Evampi hoti asataṁ samāgamo,",
  "ja537:118.4_0": "Anaddhaneyyo udakaṁ thaleva.",
  "ja537:119.1_0": "Sare yathā vāri janinda vuṭṭhaṁ,",
  "ja537:119.2_0": "Ciraṭṭhitīkaṁ naravīraseṭṭha;",
  "ja537:119.3_0": "Evampi ve hoti sataṁ samāgamo,",
  "ja537:119.4_0": "Ciraṭṭhitīko udakaṁ sareva.",
  "ja537:120.1_0": "Abyāyiko hoti sataṁ samāgamo,",
  "ja537:120.2_0": "Yāvampi tiṭṭheyya tatheva hoti;",
  "ja537:120.3_0": "Khippañhi veti asataṁ samāgamo,",
  "ja537:120.4_0": "Tasmā sataṁ dhammo asabbhi ārakā”.",
  "ja537:121.1_0": "“Na so rājā yo ajeyyaṁ jināti,",
  "ja537:121.2_0": "Na so sakhā yo sakhāraṁ jināti;",
  "ja537:121.3_0": "Na sā bhariyā yā patino na vibheti,",
  "ja537:121.4_0": "Na te puttā ye na bharanti jiṇṇaṁ.",
  "ja537:122.1_0": "Na sā sabhā yattha na santi santo,",
  "ja537:122.2_0": "Na te santo ye na bhaṇanti dhammaṁ;",
  "ja537:122.3_0": "Rāgañca dosañca pahāya mohaṁ,",
  "ja537:122.4_0": "Dhammaṁ bhaṇantāva bhavanti santo.",
  "ja537:123.1_0": "Nābhāsamānaṁ jānanti,",
  "ja537:123.2_0": "missaṁ bālehi paṇḍitaṁ;",
  "ja537:123.3_0": "Bhāsamānañca jānanti,",
  "ja537:123.4_0": "desentaṁ amataṁ padaṁ.",
  "ja537:124.1_0": "Bhāsaye jotaye dhammaṁ,",
  "ja537:124.2_0": "Paggaṇhe isinaṁ dhajaṁ;",
  "ja537:124.3_0": "Subhāsitaddhajā isayo,",
  "ja537:124.4_0": "Dhammo hi isinaṁ dhajo”ti.",
  "ja537:125.1_0": "Mahāsutasomajātakaṁ pañcamaṁ.",
  "ja537:126.1_0": "Asītinipātaṁ niṭṭhitaṁ.",
  "ja537:127.1_0": "Tassuddānaṁ",
  "ja537:128.1_0": "Sumukho pana haṁsavaro ca mahā,",
  "ja537:128.2_0": "Sudhabhojaniko ca paro pavaro;",
  "ja537:128.3_0": "Sakuṇāladijādhipativhayano,",
  "ja537:128.4_0": "Sutasomavaruttamasavhayanoti."
}