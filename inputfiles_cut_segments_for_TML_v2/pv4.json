{
  "pv4:0.1_0": "Petavatthu",
  "pv4:0.2_0": "Uragavagga",
  "pv4:0.3_0": "4. Piṭṭhadhītalikapetavatthu",
  "pv4:1.1_0": "“Yaṁ kiñcārammaṇaṁ katvā,",
  "pv4:1.2_0": "dajjā dānaṁ amaccharī;",
  "pv4:1.3_0": "Pubbapete ca ārabbha,",
  "pv4:1.4_0": "atha vā vatthudevatā.",
  "pv4:2.1_0": "Cattāro ca mahārāje,",
  "pv4:2.2_0": "lokapāle yasassine;",
  "pv4:2.3_0": "Kuveraṁ dhataraṭṭhañca,",
  "pv4:2.4_0": "virūpakkhaṁ virūḷhakaṁ;",
  "pv4:2.5_0": "Te ceva pūjitā honti,",
  "pv4:2.6_0": "dāyakā ca anipphalā.",
  "pv4:3.1_0": "Na hi ruṇṇaṁ vā soko vā,",
  "pv4:3.2_0": "yā caññā paridevanā;",
  "pv4:3.3_0": "Na taṁ petassa atthāya,",
  "pv4:3.4_0": "evaṁ tiṭṭhanti ñātayo.",
  "pv4:4.1_0": "Ayañca kho dakkhiṇā dinnā,",
  "pv4:4.2_0": "saṅghamhi suppatiṭṭhitā;",
  "pv4:4.3_0": "Dīgharattaṁ hitāyassa,",
  "pv4:4.4_0": "ṭhānaso upakappatī”ti.",
  "pv4:5.1_0": "Piṭṭhadhītalikapetavatthu catutthaṁ."
}