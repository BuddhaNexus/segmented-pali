{
  "tha-ap321:0.1_0": "Therāpadāna",
  "tha-ap321:0.2_0": "Ārakkhadāyakavagga",
  "tha-ap321:0.3_0": "9 Kandalipupphiyattheraapadāna",
  "tha-ap321:1.1_0": "“Sindhuyā nadiyā tīre,",
  "tha-ap321:1.2_0": "ahosiṁ kassako tadā;",
  "tha-ap321:1.3_0": "Parakammāyane yutto,",
  "tha-ap321:1.4_0": "parabhattaṁ apassito.",
  "tha-ap321:2.1_0": "Sindhuṁ anucarantohaṁ,",
  "tha-ap321:2.2_0": "siddhatthaṁ jinamaddasaṁ;",
  "tha-ap321:2.3_0": "Samādhinā nisinnaṁva,",
  "tha-ap321:2.4_0": "satapattaṁva pupphitaṁ.",
  "tha-ap321:3.1_0": "Satta kandalipupphāni,",
  "tha-ap321:3.2_0": "vaṇṭe chetvānahaṁ tadā;",
  "tha-ap321:3.3_0": "Matthake abhiropesiṁ,",
  "tha-ap321:3.4_0": "buddhassādiccabandhuno.",
  "tha-ap321:4.1_0": "Suvaṇṇavaṇṇaṁ sambuddhaṁ,",
  "tha-ap321:4.2_0": "Anukūle samāhitaṁ;",
  "tha-ap321:4.3_0": "Tidhāpabhinnamātaṅgaṁ,",
  "tha-ap321:4.4_0": "Kuñjaraṁva durāsadaṁ.",
  "tha-ap321:5.1_0": "Tamahaṁ upagantvāna,",
  "tha-ap321:5.2_0": "nipakaṁ bhāvitindriyaṁ;",
  "tha-ap321:5.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap321:5.4_0": "avandiṁ satthuno ahaṁ.",
  "tha-ap321:6.1_0": "Catunnavutito kappe,",
  "tha-ap321:6.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap321:6.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap321:6.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap321:7.1_0": "Paṭisambhidā catasso,",
  "tha-ap321:7.2_0": "…pe…",
  "tha-ap321:7.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap321:8.1_0": "Itthaṁ sudaṁ āyasmā kandalipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap321:9.1_0": "Kandalipupphiyattherassāpadānaṁ navamaṁ."
}