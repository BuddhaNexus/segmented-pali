{
  "tha-ap20:0.1_0": "Therāpadāna",
  "tha-ap20:0.2_0": "Sīhāsaniyavagga",
  "tha-ap20:0.3_0": "8. Raṭṭhapālattheraapadāna",
  "tha-ap20:1.1_0": "“Padumuttarassa bhagavato,",
  "tha-ap20:1.2_0": "Lokajeṭṭhassa tādino;",
  "tha-ap20:1.3_0": "Varanāgo mayā dinno,",
  "tha-ap20:1.4_0": "Īsādanto urūḷhavā.",
  "tha-ap20:2.1_0": "Setacchatto pasobhito,",
  "tha-ap20:2.2_0": "sakappano sahatthipo;",
  "tha-ap20:2.3_0": "Agghāpetvāna taṁ sabbaṁ,",
  "tha-ap20:2.4_0": "saṅghārāmaṁ akārayiṁ.",
  "tha-ap20:3.1_0": "Catupaññāsasahassāni,",
  "tha-ap20:3.2_0": "pāsāde kārayiṁ ahaṁ;",
  "tha-ap20:3.3_0": "Mahoghadānaṁ karitvāna,",
  "tha-ap20:3.4_0": "niyyādesiṁ mahesino.",
  "tha-ap20:4.1_0": "Anumodi mahāvīro,",
  "tha-ap20:4.2_0": "sayambhū aggapuggalo;",
  "tha-ap20:4.3_0": "Sabbe jane hāsayanto,",
  "tha-ap20:4.4_0": "desesi amataṁ padaṁ.",
  "tha-ap20:5.1_0": "Taṁ me buddho viyākāsi,",
  "tha-ap20:5.2_0": "jalajuttaranāmako;",
  "tha-ap20:5.3_0": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap20:5.4_0": "imā gāthā abhāsatha.",
  "tha-ap20:6.1_0": "‘Catupaññāsasahassāni,",
  "tha-ap20:6.2_0": "pāsāde kārayī ayaṁ;",
  "tha-ap20:6.3_0": "Kathayissāmi vipākaṁ,",
  "tha-ap20:6.4_0": "suṇotha mama bhāsato.",
  "tha-ap20:7.1_0": "Aṭṭhārasasahassāni,",
  "tha-ap20:7.2_0": "kūṭāgārā bhavissare;",
  "tha-ap20:7.3_0": "Byamhuttamamhi nibbattā,",
  "tha-ap20:7.4_0": "sabbasoṇṇamayā ca te.",
  "tha-ap20:8.1_0": "Paññāsakkhattuṁ devindo,",
  "tha-ap20:8.2_0": "devarajjaṁ karissati;",
  "tha-ap20:8.3_0": "Aṭṭhapaññāsakkhattuñca,",
  "tha-ap20:8.4_0": "cakkavattī bhavissati.",
  "tha-ap20:9.1_0": "Kappasatasahassamhi,",
  "tha-ap20:9.2_0": "okkākakulasambhavo;",
  "tha-ap20:9.3_0": "Gotamo nāma gottena,",
  "tha-ap20:9.4_0": "satthā loke bhavissati.",
  "tha-ap20:10.1_0": "Devalokā cavitvāna,",
  "tha-ap20:10.2_0": "sukkamūlena codito;",
  "tha-ap20:10.3_0": "Aḍḍhe kule mahābhoge,",
  "tha-ap20:10.4_0": "nibbattissati tāvade.",
  "tha-ap20:11.1_0": "So pacchā pabbajitvāna,",
  "tha-ap20:11.2_0": "sukkamūlena codito;",
  "tha-ap20:11.3_0": "Raṭṭhapāloti nāmena,",
  "tha-ap20:11.4_0": "hessati satthu sāvako.",
  "tha-ap20:12.1_0": "Padhānapahitatto so,",
  "tha-ap20:12.2_0": "upasanto nirūpadhi;",
  "tha-ap20:12.3_0": "Sabbāsave pariññāya,",
  "tha-ap20:12.4_0": "nibbāyissatināsavo’.",
  "tha-ap20:13.1_0": "Uṭṭhāya abhinikkhamma,",
  "tha-ap20:13.2_0": "jahitā bhogasampadā;",
  "tha-ap20:13.3_0": "Kheḷapiṇḍeva bhogamhi,",
  "tha-ap20:13.4_0": "pemaṁ mayhaṁ na vijjati.",
  "tha-ap20:14.1_0": "Vīriyaṁ me dhuradhorayhaṁ,",
  "tha-ap20:14.2_0": "yogakkhemādhivāhanaṁ;",
  "tha-ap20:14.3_0": "Dhāremi antimaṁ dehaṁ,",
  "tha-ap20:14.4_0": "sammāsambuddhasāsane.",
  "tha-ap20:15.1_0": "Paṭisambhidā catasso,",
  "tha-ap20:15.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap20:15.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap20:15.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap20:16.1_0": "Itthaṁ sudaṁ āyasmā raṭṭhapālo thero imā gāthāyo abhāsitthāti.",
  "tha-ap20:17.1_0": "Raṭṭhapālattherassāpadānaṁ aṭṭhamaṁ."
}