{
  "tha-ap535:0.1_0": "Therāpadāna",
  "tha-ap535:0.2_0": "Kaccāyanavagga",
  "tha-ap535:0.3_0": "3. Mahākappinattheraapadāna",
  "tha-ap535:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap535:1.2_0": "sabbadhammāna pāragū;",
  "tha-ap535:1.3_0": "Udito ajaṭākāse,",
  "tha-ap535:1.4_0": "ravīva saradambare.",
  "tha-ap535:2.1_0": "Vacanābhāya bodheti,",
  "tha-ap535:2.2_0": "veneyyapadumāni so;",
  "tha-ap535:2.3_0": "Kilesapaṅkaṁ soseti,",
  "tha-ap535:2.4_0": "matiraṁsīhi nāyako.",
  "tha-ap535:3.1_0": "Titthiyānaṁ yase hanti,",
  "tha-ap535:3.2_0": "khajjotābhā yathā ravi;",
  "tha-ap535:3.3_0": "Saccatthābhaṁ pakāseti,",
  "tha-ap535:3.4_0": "ratanaṁva divākaro.",
  "tha-ap535:4.1_0": "Guṇānaṁ āyatibhūto,",
  "tha-ap535:4.2_0": "ratanānaṁva sāgaro;",
  "tha-ap535:4.3_0": "Pajjunnoriva bhūtāni,",
  "tha-ap535:4.4_0": "dhammameghena vassati.",
  "tha-ap535:5.1_0": "Akkhadasso tadā āsiṁ,",
  "tha-ap535:5.2_0": "nagare haṁsasavhaye;",
  "tha-ap535:5.3_0": "Upecca dhammamassosiṁ,",
  "tha-ap535:5.4_0": "jalajuttamanāmino.",
  "tha-ap535:6.1_0": "Ovādakassa bhikkhūnaṁ,",
  "tha-ap535:6.2_0": "sāvakassa katāvino;",
  "tha-ap535:6.3_0": "Guṇaṁ pakāsayantassa,",
  "tha-ap535:6.4_0": "tappayantassa me manaṁ.",
  "tha-ap535:7.1_0": "Sutvā patīto sumano,",
  "tha-ap535:7.2_0": "nimantetvā tathāgataṁ;",
  "tha-ap535:7.3_0": "Sasissaṁ bhojayitvāna,",
  "tha-ap535:7.4_0": "taṁ ṭhānamabhipatthayiṁ.",
  "tha-ap535:8.1_0": "Tadā haṁsasamabhāgo,",
  "tha-ap535:8.2_0": "haṁsadundubhinissano;",
  "tha-ap535:8.3_0": "‘Passathetaṁ mahāmattaṁ,",
  "tha-ap535:8.4_0": "vinicchayavisāradaṁ.",
  "tha-ap535:9.1_0": "Patitaṁ pādamūle me,",
  "tha-ap535:9.2_0": "samuggatatanūruhaṁ;",
  "tha-ap535:9.3_0": "Jīmūtavaṇṇaṁ pīṇaṁsaṁ,",
  "tha-ap535:9.4_0": "pasannanayanānanaṁ.",
  "tha-ap535:10.1_0": "Parivārena mahatā,",
  "tha-ap535:10.2_0": "rājayuttaṁ mahāyasaṁ;",
  "tha-ap535:10.3_0": "Eso katāvino ṭhānaṁ,",
  "tha-ap535:10.4_0": "pattheti muditāsayo.",
  "tha-ap535:11.1_0": "Iminā paṇipātena,",
  "tha-ap535:11.2_0": "cāgena paṇidhīhi ca;",
  "tha-ap535:11.3_0": "Kappasatasahassāni,",
  "tha-ap535:11.4_0": "nupapajjati duggatiṁ.",
  "tha-ap535:12.1_0": "Devesu devasobhaggaṁ,",
  "tha-ap535:12.2_0": "manussesu mahantataṁ;",
  "tha-ap535:12.3_0": "Anubhotvāna sesena,",
  "tha-ap535:12.4_0": "nibbānaṁ pāpuṇissati.",
  "tha-ap535:13.1_0": "Satasahassito kappe,",
  "tha-ap535:13.2_0": "okkākakulasambhavo;",
  "tha-ap535:13.3_0": "Gotamo nāma gottena,",
  "tha-ap535:13.4_0": "satthā loke bhavissati.",
  "tha-ap535:14.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap535:14.2_0": "oraso dhammanimmito;",
  "tha-ap535:14.3_0": "Kappino nāma nāmena,",
  "tha-ap535:14.4_0": "hessati satthu sāvako’.",
  "tha-ap535:15.1_0": "Tatohaṁ sukataṁ kāraṁ,",
  "tha-ap535:15.2_0": "katvāna jinasāsane;",
  "tha-ap535:15.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap535:15.4_0": "tusitaṁ agamāsahaṁ.",
  "tha-ap535:16.1_0": "Devamānusarajjāni,",
  "tha-ap535:16.2_0": "sataso anusāsiya;",
  "tha-ap535:16.3_0": "Bārāṇasiyamāsanne,",
  "tha-ap535:16.4_0": "jāto keniyajātiyaṁ.",
  "tha-ap535:17.1_0": "Sahassaparivārena,",
  "tha-ap535:17.2_0": "sapajāpatiko ahaṁ;",
  "tha-ap535:17.3_0": "Pañca paccekabuddhānaṁ,",
  "tha-ap535:17.4_0": "satāni samupaṭṭhahiṁ.",
  "tha-ap535:18.1_0": "Temāsaṁ bhojayitvāna,",
  "tha-ap535:18.2_0": "pacchādamha ticīvaraṁ;",
  "tha-ap535:18.3_0": "Tato cutā mayaṁ sabbe,",
  "tha-ap535:18.4_0": "ahumha tidasūpagā.",
  "tha-ap535:19.1_0": "Puno sabbe manussattaṁ,",
  "tha-ap535:19.2_0": "agamimha tato cutā;",
  "tha-ap535:19.3_0": "Kukkuṭamhi pure jātā,",
  "tha-ap535:19.4_0": "himavantassa passato.",
  "tha-ap535:20.1_0": "Kappino nāmahaṁ āsiṁ,",
  "tha-ap535:20.2_0": "rājaputto mahāyaso;",
  "tha-ap535:20.3_0": "Sesāmaccakule jātā,",
  "tha-ap535:20.4_0": "mameva parivārayuṁ.",
  "tha-ap535:21.1_0": "Mahārajjasukhaṁ patto,",
  "tha-ap535:21.2_0": "sabbakāmasamiddhimā;",
  "tha-ap535:21.3_0": "Vāṇijehi samakkhātaṁ,",
  "tha-ap535:21.4_0": "buddhuppādamahaṁ suṇiṁ.",
  "tha-ap535:22.1_0": "‘Buddho loke samuppanno,",
  "tha-ap535:22.2_0": "asamo ekapuggalo;",
  "tha-ap535:22.3_0": "So pakāseti saddhammaṁ,",
  "tha-ap535:22.4_0": "amataṁ sukhamuttamaṁ.",
  "tha-ap535:23.1_0": "Suyuttā tassa sissā ca,",
  "tha-ap535:23.2_0": "sumuttā ca anāsavā’;",
  "tha-ap535:23.3_0": "Sutvā nesaṁ suvacanaṁ,",
  "tha-ap535:23.4_0": "sakkaritvāna vāṇije.",
  "tha-ap535:24.1_0": "Pahāya rajjaṁ sāmacco,",
  "tha-ap535:24.2_0": "nikkhamiṁ buddhamāmako;",
  "tha-ap535:24.3_0": "Nadiṁ disvā mahācandaṁ,",
  "tha-ap535:24.4_0": "pūritaṁ samatittikaṁ.",
  "tha-ap535:25.1_0": "Appatiṭṭhaṁ anālambaṁ,",
  "tha-ap535:25.2_0": "duttaraṁ sīghavāhiniṁ;",
  "tha-ap535:25.3_0": "Guṇaṁ saritvā buddhassa,",
  "tha-ap535:25.4_0": "sotthinā samatikkamiṁ.",
  "tha-ap535:26.1_0": "‘Bhavasotaṁ sace buddho,",
  "tha-ap535:26.2_0": "tiṇṇo lokantagū vidū;",
  "tha-ap535:26.3_0": "Etena saccavajjena,",
  "tha-ap535:26.4_0": "gamanaṁ me samijjhatu.",
  "tha-ap535:27.1_0": "Yadi santigamo maggo,",
  "tha-ap535:27.2_0": "mokkho caccantikaṁ sukhaṁ;",
  "tha-ap535:27.3_0": "Etena saccavajjena,",
  "tha-ap535:27.4_0": "gamanaṁ me samijjhatu.",
  "tha-ap535:28.1_0": "Saṅgho ce tiṇṇakantāro,",
  "tha-ap535:28.2_0": "puññakkhetto anuttaro;",
  "tha-ap535:28.3_0": "Etena saccavajjena,",
  "tha-ap535:28.4_0": "gamanaṁ me samijjhatu’.",
  "tha-ap535:29.1_0": "Saha kate saccavare,",
  "tha-ap535:29.2_0": "maggā apagataṁ jalaṁ;",
  "tha-ap535:29.3_0": "Tato sukhena uttiṇṇo,",
  "tha-ap535:29.4_0": "nadītīre manorame.",
  "tha-ap535:30.1_0": "Nisinnaṁ addasaṁ buddhaṁ,",
  "tha-ap535:30.2_0": "udentaṁva pabhaṅkaraṁ;",
  "tha-ap535:30.3_0": "Jalantaṁ hemaselaṁva,",
  "tha-ap535:30.4_0": "dīparukkhaṁva jotitaṁ.",
  "tha-ap535:31.1_0": "Sasiṁva tārāsahitaṁ,",
  "tha-ap535:31.2_0": "sāvakehi purakkhataṁ;",
  "tha-ap535:31.3_0": "Vāsavaṁ viya vassantaṁ,",
  "tha-ap535:31.4_0": "desanājaladantaraṁ.",
  "tha-ap535:32.1_0": "Vanditvāna sahāmacco,",
  "tha-ap535:32.2_0": "ekamantamupāvisiṁ;",
  "tha-ap535:32.3_0": "Tato no āsayaṁ ñatvā,",
  "tha-ap535:32.4_0": "buddho dhammamadesayi.",
  "tha-ap535:33.1_0": "Sutvāna dhammaṁ vimalaṁ,",
  "tha-ap535:33.2_0": "avocumha mayaṁ jinaṁ;",
  "tha-ap535:33.3_0": "‘Pabbājehi mahāvīra,",
  "tha-ap535:33.4_0": "nibbindāmha mayaṁ bhave’.",
  "tha-ap535:34.1_0": "‘Svākkhāto bhikkhave dhammo,",
  "tha-ap535:34.2_0": "dukkhantakaraṇāya vo;",
  "tha-ap535:34.3_0": "Caratha brahmacariyaṁ’,",
  "tha-ap535:34.4_0": "iccāha munisattamo.",
  "tha-ap535:35.1_0": "Saha vācāya sabbepi,",
  "tha-ap535:35.2_0": "bhikkhuvesadharā mayaṁ;",
  "tha-ap535:35.3_0": "Ahumha upasampannā,",
  "tha-ap535:35.4_0": "sotāpannā ca sāsane.",
  "tha-ap535:36.1_0": "Tato jetavanaṁ gantvā,",
  "tha-ap535:36.2_0": "anusāsi vināyako;",
  "tha-ap535:36.3_0": "Anusiṭṭho jinenāhaṁ,",
  "tha-ap535:36.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap535:37.1_0": "Tato bhikkhusahassāni,",
  "tha-ap535:37.2_0": "anusāsimahaṁ tadā;",
  "tha-ap535:37.3_0": "Mamānusāsanakarā,",
  "tha-ap535:37.4_0": "tepi āsuṁ anāsavā.",
  "tha-ap535:38.1_0": "Jino tasmiṁ guṇe tuṭṭho,",
  "tha-ap535:38.2_0": "etadagge ṭhapesi maṁ;",
  "tha-ap535:38.3_0": "Bhikkhuovādakānaggo,",
  "tha-ap535:38.4_0": "kappinoti mahājane.",
  "tha-ap535:39.1_0": "Satasahasse kataṁ kammaṁ,",
  "tha-ap535:39.2_0": "phalaṁ dassesi me idha;",
  "tha-ap535:39.3_0": "Pamutto saravegova,",
  "tha-ap535:39.4_0": "kilese jhāpayiṁ mama.",
  "tha-ap535:40.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap535:40.2_0": "…pe…",
  "tha-ap535:40.3_0": "viharāmi anāsavo.",
  "tha-ap535:41.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap535:41.2_0": "…pe…",
  "tha-ap535:41.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap535:42.1_0": "Paṭisambhidā catasso,",
  "tha-ap535:42.2_0": "…pe…",
  "tha-ap535:42.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap535:43.1_0": "Itthaṁ sudaṁ āyasmā mahākappino thero imā gāthāyo abhāsitthāti.",
  "tha-ap535:44.1_0": "Mahākappinattherassāpadānaṁ tatiyaṁ."
}