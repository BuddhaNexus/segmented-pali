{
  "thi-ap14:0.1_0": "Therīapadāna",
  "thi-ap14:0.2_0": "Ekūposathikavagga",
  "thi-ap14:0.3_0": "4. Ekāsanadāyikātherīapadāna",
  "thi-ap14:1.1_0": "“Nagare haṁsavatiyā,",
  "thi-ap14:1.2_0": "ahosiṁ bālikā tadā;",
  "thi-ap14:1.3_0": "Mātā ca me pitā ceva,",
  "thi-ap14:1.4_0": "kammantaṁ agamaṁsu te.",
  "thi-ap14:2.1_0": "Majjhanhikamhi sūriye,",
  "thi-ap14:2.2_0": "addasaṁ samaṇaṁ ahaṁ;",
  "thi-ap14:2.3_0": "Vīthiyā anugacchantaṁ,",
  "thi-ap14:2.4_0": "āsanaṁ paññapesahaṁ.",
  "thi-ap14:3.1_0": "Gonakāvikatikāhi,",
  "thi-ap14:3.2_0": "paññapetvā mamāsanaṁ;",
  "thi-ap14:3.3_0": "Pasannacittā sumanā,",
  "thi-ap14:3.4_0": "idaṁ vacanamabraviṁ.",
  "thi-ap14:4.1_0": "‘Santattā kuthitā bhūmi,",
  "thi-ap14:4.2_0": "sūro majjhanhike ṭhito;",
  "thi-ap14:4.3_0": "Mālutā ca na vāyanti,",
  "thi-ap14:4.4_0": "kālo cevettha mehiti.",
  "thi-ap14:5.1_0": "Paññattamāsanamidaṁ,",
  "thi-ap14:5.2_0": "tavatthāya mahāmuni;",
  "thi-ap14:5.3_0": "Anukampaṁ upādāya,",
  "thi-ap14:5.4_0": "nisīda mama āsane’.",
  "thi-ap14:6.1_0": "Nisīdi tattha samaṇo,",
  "thi-ap14:6.2_0": "sudanto suddhamānaso;",
  "thi-ap14:6.3_0": "Tassa pattaṁ gahetvāna,",
  "thi-ap14:6.4_0": "yathārandhaṁ adāsahaṁ.",
  "thi-ap14:7.1_0": "Tena kammena sukatena,",
  "thi-ap14:7.2_0": "cetanāpaṇidhīhi ca;",
  "thi-ap14:7.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap14:7.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap14:8.1_0": "Tattha me sukataṁ byamhaṁ,",
  "thi-ap14:8.2_0": "āsanena sunimmitaṁ;",
  "thi-ap14:8.3_0": "Saṭṭhiyojanamubbedhaṁ,",
  "thi-ap14:8.4_0": "tiṁsayojanavitthataṁ.",
  "thi-ap14:9.1_0": "Soṇṇamayā maṇimayā,",
  "thi-ap14:9.2_0": "athopi phalikāmayā;",
  "thi-ap14:9.3_0": "Lohitaṅgamayā ceva,",
  "thi-ap14:9.4_0": "pallaṅkā vividhā mama.",
  "thi-ap14:10.1_0": "Tūlikāvikatikāhi,",
  "thi-ap14:10.2_0": "kaṭṭissacittakāhi ca;",
  "thi-ap14:10.3_0": "Uddaekantalomī ca,",
  "thi-ap14:10.4_0": "pallaṅkā me susaṇṭhitā.",
  "thi-ap14:11.1_0": "Yadā icchāmi gamanaṁ,",
  "thi-ap14:11.2_0": "hāsakhiḍḍasamappitā;",
  "thi-ap14:11.3_0": "Saha pallaṅkaseṭṭhena,",
  "thi-ap14:11.4_0": "gacchāmi mama patthitaṁ.",
  "thi-ap14:12.1_0": "Asīti devarājūnaṁ,",
  "thi-ap14:12.2_0": "mahesittamakārayiṁ;",
  "thi-ap14:12.3_0": "Sattati cakkavattīnaṁ,",
  "thi-ap14:12.4_0": "mahesittamakārayiṁ.",
  "thi-ap14:13.1_0": "Bhavābhave saṁsarantī,",
  "thi-ap14:13.2_0": "mahābhogaṁ labhāmahaṁ;",
  "thi-ap14:13.3_0": "Bhoge me ūnatā natthi,",
  "thi-ap14:13.4_0": "ekāsanassidaṁ phalaṁ.",
  "thi-ap14:14.1_0": "Duve bhave saṁsarāmi,",
  "thi-ap14:14.2_0": "devatte atha mānuse;",
  "thi-ap14:14.3_0": "Aññe bhave na jānāmi,",
  "thi-ap14:14.4_0": "ekāsanassidaṁ phalaṁ.",
  "thi-ap14:15.1_0": "Duve kule pajāyāmi,",
  "thi-ap14:15.2_0": "khattiye cāpi brāhmaṇe;",
  "thi-ap14:15.3_0": "Uccākulīnā sabbattha,",
  "thi-ap14:15.4_0": "ekāsanassidaṁ phalaṁ.",
  "thi-ap14:16.1_0": "Domanassaṁ na jānāmi,",
  "thi-ap14:16.2_0": "cittasantāpanaṁ mama;",
  "thi-ap14:16.3_0": "Vevaṇṇiyaṁ na jānāmi,",
  "thi-ap14:16.4_0": "ekāsanassidaṁ phalaṁ.",
  "thi-ap14:17.1_0": "Dhātiyo maṁ upaṭṭhanti,",
  "thi-ap14:17.2_0": "khujjā celāpikā bahū;",
  "thi-ap14:17.3_0": "Aṅkena aṅkaṁ gacchāmi,",
  "thi-ap14:17.4_0": "ekāsanassidaṁ phalaṁ.",
  "thi-ap14:18.1_0": "Aññā nhāpenti bhojenti,",
  "thi-ap14:18.2_0": "aññā ramenti maṁ sadā;",
  "thi-ap14:18.3_0": "Aññā gandhaṁ vilimpanti,",
  "thi-ap14:18.4_0": "ekāsanassidaṁ phalaṁ.",
  "thi-ap14:19.1_0": "Maṇḍape rukkhamūle vā,",
  "thi-ap14:19.2_0": "suññāgāre vasantiyā;",
  "thi-ap14:19.3_0": "Mama saṅkappamaññāya,",
  "thi-ap14:19.4_0": "pallaṅko upatiṭṭhati.",
  "thi-ap14:20.1_0": "Ayaṁ pacchimako mayhaṁ,",
  "thi-ap14:20.2_0": "carimo vattate bhavo;",
  "thi-ap14:20.3_0": "Ajjāpi rajjaṁ chaḍḍetvā,",
  "thi-ap14:20.4_0": "pabbajiṁ anagāriyaṁ.",
  "thi-ap14:21.1_0": "Satasahassito kappe,",
  "thi-ap14:21.2_0": "yaṁ dānamadadiṁ tadā;",
  "thi-ap14:21.3_0": "Duggatiṁ nābhijānāmi,",
  "thi-ap14:21.4_0": "ekāsanassidaṁ phalaṁ.",
  "thi-ap14:22.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap14:22.2_0": "…pe…",
  "thi-ap14:22.3_0": "viharāmi anāsavā.",
  "thi-ap14:23.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap14:23.2_0": "…pe…",
  "thi-ap14:23.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap14:24.1_0": "Paṭisambhidā catasso,",
  "thi-ap14:24.2_0": "…pe…",
  "thi-ap14:24.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap14:25.1_0": "Itthaṁ sudaṁ ekāsanadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap14:26.1_0": "Ekāsanadāyikātheriyāpadānaṁ catutthaṁ."
}