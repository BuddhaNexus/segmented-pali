{
  "tha-ap397:0.1_0": "Therāpadāna",
  "tha-ap397:0.2_0": "Pilindavacchavagga",
  "tha-ap397:0.3_0": "5 Padumakūṭāgāriyattheraapadāna",
  "tha-ap397:1.1_0": "“Piyadassī nāma bhagavā,",
  "tha-ap397:1.2_0": "sayambhū lokanāyako;",
  "tha-ap397:1.3_0": "Vivekakāmo sambuddho,",
  "tha-ap397:1.4_0": "samādhikusalo muni.",
  "tha-ap397:2.1_0": "Vanasaṇḍaṁ samogayha,",
  "tha-ap397:2.2_0": "piyadassī mahāmuni;",
  "tha-ap397:2.3_0": "Paṁsukūlaṁ pattharitvā,",
  "tha-ap397:2.4_0": "nisīdi purisuttamo.",
  "tha-ap397:3.1_0": "Migaluddo pure āsiṁ,",
  "tha-ap397:3.2_0": "araññe kānane ahaṁ;",
  "tha-ap397:3.3_0": "Pasadaṁ migamesanto,",
  "tha-ap397:3.4_0": "āhiṇḍāmi ahaṁ tadā.",
  "tha-ap397:4.1_0": "Tatthaddasāsiṁ sambuddhaṁ,",
  "tha-ap397:4.2_0": "oghatiṇṇamanāsavaṁ;",
  "tha-ap397:4.3_0": "Pupphitaṁ sālarājaṁva,",
  "tha-ap397:4.4_0": "sataraṁsiṁva uggataṁ.",
  "tha-ap397:5.1_0": "Disvānahaṁ devadevaṁ,",
  "tha-ap397:5.2_0": "piyadassiṁ mahāyasaṁ;",
  "tha-ap397:5.3_0": "Jātassaraṁ samogayha,",
  "tha-ap397:5.4_0": "padumaṁ āhariṁ tadā.",
  "tha-ap397:6.1_0": "Āharitvāna padumaṁ,",
  "tha-ap397:6.2_0": "satapattaṁ manoramaṁ;",
  "tha-ap397:6.3_0": "Kūṭāgāraṁ karitvāna,",
  "tha-ap397:6.4_0": "chādayiṁ padumenahaṁ.",
  "tha-ap397:7.1_0": "Anukampako kāruṇiko,",
  "tha-ap397:7.2_0": "piyadassī mahāmuni;",
  "tha-ap397:7.3_0": "Sattarattindivaṁ buddho,",
  "tha-ap397:7.4_0": "kūṭāgāre vasī jino.",
  "tha-ap397:8.1_0": "Purāṇaṁ chaḍḍayitvāna,",
  "tha-ap397:8.2_0": "navena chādayiṁ ahaṁ;",
  "tha-ap397:8.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap397:8.4_0": "aṭṭhāsiṁ tāvade ahaṁ.",
  "tha-ap397:9.1_0": "Vuṭṭhahitvā samādhimhā,",
  "tha-ap397:9.2_0": "piyadassī mahāmuni;",
  "tha-ap397:9.3_0": "Disaṁ anuvilokento,",
  "tha-ap397:9.4_0": "nisīdi lokanāyako.",
  "tha-ap397:10.1_0": "Tadā sudassano nāma,",
  "tha-ap397:10.2_0": "upaṭṭhāko mahiddhiko;",
  "tha-ap397:10.3_0": "Cittamaññāya buddhassa,",
  "tha-ap397:10.4_0": "piyadassissa satthuno.",
  "tha-ap397:11.1_0": "Asītiyā sahassehi,",
  "tha-ap397:11.2_0": "bhikkhūhi parivārito;",
  "tha-ap397:11.3_0": "Vanante sukhamāsīnaṁ,",
  "tha-ap397:11.4_0": "upesi lokanāyakaṁ.",
  "tha-ap397:12.1_0": "Yāvatā vanasaṇḍamhi,",
  "tha-ap397:12.2_0": "adhivatthā ca devatā;",
  "tha-ap397:12.3_0": "Buddhassa cittamaññāya,",
  "tha-ap397:12.4_0": "sabbe sannipatuṁ tadā.",
  "tha-ap397:13.1_0": "Samāgatesu yakkhesu,",
  "tha-ap397:13.2_0": "kumbhaṇḍe saharakkhase;",
  "tha-ap397:13.3_0": "Bhikkhusaṅghe ca sampatte,",
  "tha-ap397:13.4_0": "gāthā pabyāharī jino.",
  "tha-ap397:14.1_0": "‘Yo maṁ sattāhaṁ pūjesi,",
  "tha-ap397:14.2_0": "āvāsañca akāsi me;",
  "tha-ap397:14.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap397:14.4_0": "suṇātha mama bhāsato.",
  "tha-ap397:15.1_0": "Sududdasaṁ sunipuṇaṁ,",
  "tha-ap397:15.2_0": "gambhīraṁ suppakāsitaṁ;",
  "tha-ap397:15.3_0": "Ñāṇena kittayissāmi,",
  "tha-ap397:15.4_0": "suṇātha mama bhāsato.",
  "tha-ap397:16.1_0": "Catuddasāni kappāni,",
  "tha-ap397:16.2_0": "devarajjaṁ karissati;",
  "tha-ap397:16.3_0": "Kūṭāgāraṁ mahantassa,",
  "tha-ap397:16.4_0": "padmapupphehi chāditaṁ.",
  "tha-ap397:17.1_0": "Ākāse dhārayissati,",
  "tha-ap397:17.2_0": "Pupphakammassidaṁ phalaṁ;",
  "tha-ap397:17.3_0": "Catubbīse kappasate,",
  "tha-ap397:17.4_0": "Vokiṇṇaṁ saṁsarissati.",
  "tha-ap397:18.1_0": "Tattha pupphamayaṁ byamhaṁ,",
  "tha-ap397:18.2_0": "Ākāse dhārayissati;",
  "tha-ap397:18.3_0": "Yathā padumapattamhi,",
  "tha-ap397:18.4_0": "Toyaṁ na upalimpati.",
  "tha-ap397:19.1_0": "Tathevīmassa ñāṇamhi,",
  "tha-ap397:19.2_0": "kilesā nopalimpare;",
  "tha-ap397:19.3_0": "Manasā vinivaṭṭetvā,",
  "tha-ap397:19.4_0": "pañca nīvaraṇe ayaṁ.",
  "tha-ap397:20.1_0": "Cittaṁ janetvā nekkhamme,",
  "tha-ap397:20.2_0": "agārā pabbajissati;",
  "tha-ap397:20.3_0": "Tato pupphamaye byamhe,",
  "tha-ap397:20.4_0": "dhārente nikkhamissati.",
  "tha-ap397:21.1_0": "Rukkhamūle vasantassa,",
  "tha-ap397:21.2_0": "Nipakassa satīmato;",
  "tha-ap397:21.3_0": "Tattha pupphamayaṁ byamhaṁ,",
  "tha-ap397:21.4_0": "Matthake dhārayissati.",
  "tha-ap397:22.1_0": "Cīvaraṁ piṇḍapātañca,",
  "tha-ap397:22.2_0": "paccayaṁ sayanāsanaṁ;",
  "tha-ap397:22.3_0": "Datvāna bhikkhusaṅghassa,",
  "tha-ap397:22.4_0": "nibbāyissatināsavo’.",
  "tha-ap397:23.1_0": "Kūṭāgārena caratā,",
  "tha-ap397:23.2_0": "pabbajjaṁ abhinikkhamiṁ;",
  "tha-ap397:23.3_0": "Rukkhamūle vasantampi,",
  "tha-ap397:23.4_0": "kūṭāgāraṁ dharīyati.",
  "tha-ap397:24.1_0": "Cīvare piṇḍapāte ca,",
  "tha-ap397:24.2_0": "cetanā me na vijjati;",
  "tha-ap397:24.3_0": "Puññakammena saṁyutto,",
  "tha-ap397:24.4_0": "labhāmi pariniṭṭhitaṁ.",
  "tha-ap397:25.1_0": "Gaṇanāto asaṅkheyyā,",
  "tha-ap397:25.2_0": "kappakoṭī bahū mama;",
  "tha-ap397:25.3_0": "Rittakā te atikkantā,",
  "tha-ap397:25.4_0": "pamuttā lokanāyakā.",
  "tha-ap397:26.1_0": "Aṭṭhārase kappasate,",
  "tha-ap397:26.2_0": "piyadassī vināyako;",
  "tha-ap397:26.3_0": "Tamahaṁ payirupāsitvā,",
  "tha-ap397:26.4_0": "imaṁ yoniṁ upāgato.",
  "tha-ap397:27.1_0": "Idha passāmi sambuddhaṁ,",
  "tha-ap397:27.2_0": "anomaṁ nāma cakkhumaṁ;",
  "tha-ap397:27.3_0": "Tamahaṁ upagantvāna,",
  "tha-ap397:27.4_0": "pabbajiṁ anagāriyaṁ.",
  "tha-ap397:28.1_0": "Dukkhassantakaro buddho,",
  "tha-ap397:28.2_0": "maggaṁ me desayī jino;",
  "tha-ap397:28.3_0": "Tassa dhammaṁ suṇitvāna,",
  "tha-ap397:28.4_0": "pattomhi acalaṁ padaṁ.",
  "tha-ap397:29.1_0": "Tosayitvāna sambuddhaṁ,",
  "tha-ap397:29.2_0": "gotamaṁ sakyapuṅgavaṁ;",
  "tha-ap397:29.3_0": "Sabbāsave pariññāya,",
  "tha-ap397:29.4_0": "viharāmi anāsavo.",
  "tha-ap397:30.1_0": "Aṭṭhārase kappasate,",
  "tha-ap397:30.2_0": "yaṁ buddhamabhipūjayiṁ;",
  "tha-ap397:30.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap397:30.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap397:31.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap397:31.2_0": "bhavā sabbe samūhatā;",
  "tha-ap397:31.3_0": "Sabbāsavā parikkhīṇā,",
  "tha-ap397:31.4_0": "natthi dāni punabbhavo.",
  "tha-ap397:32.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap397:32.2_0": "…pe…",
  "tha-ap397:32.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap397:33.1_0": "Paṭisambhidā catasso,",
  "tha-ap397:33.2_0": "…pe…",
  "tha-ap397:33.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap397:34.1_0": "Itthaṁ sudaṁ āyasmā padumakūṭāgāriyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap397:35.1_0": "Padumakūṭāgāriyattherassāpadānaṁ pañcamaṁ."
}