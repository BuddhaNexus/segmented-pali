{
  "thi-ap33:0.1_0": "Therīapadāna",
  "thi-ap33:0.2_0": "Khattiyāvagga",
  "thi-ap33:0.3_0": "3. Uppaladāyikātherīapadāna",
  "thi-ap33:1.1_0": "“Nagare aruṇavatiyā,",
  "thi-ap33:1.2_0": "aruṇo nāma khattiyo;",
  "thi-ap33:1.3_0": "Tassa rañño ahuṁ bhariyā,",
  "thi-ap33:1.4_0": "ekajjhaṁ cārayāmahaṁ.",
  "thi-ap33:2.1_0": "Rahogatā nisīditvā,",
  "thi-ap33:2.2_0": "evaṁ cintesahaṁ tadā;",
  "thi-ap33:2.3_0": "‘Kusalaṁ me kataṁ natthi,",
  "thi-ap33:2.4_0": "ādāya gamiyaṁ mama.",
  "thi-ap33:3.1_0": "Mahābhitāpaṁ kaṭukaṁ,",
  "thi-ap33:3.2_0": "ghorarūpaṁ sudāruṇaṁ;",
  "thi-ap33:3.3_0": "Nirayaṁ nūna gacchāmi,",
  "thi-ap33:3.4_0": "ettha me natthi saṁsayo’.",
  "thi-ap33:4.1_0": "Evāhaṁ cintayitvāna,",
  "thi-ap33:4.2_0": "pahaṁsetvāna mānasaṁ;",
  "thi-ap33:4.3_0": "Rājānaṁ upagantvāna,",
  "thi-ap33:4.4_0": "idaṁ vacanamabraviṁ.",
  "thi-ap33:5.1_0": "‘Itthī nāma mayaṁ deva,",
  "thi-ap33:5.2_0": "purisānittarā ahu;",
  "thi-ap33:5.3_0": "Ekaṁ me samaṇaṁ dehi,",
  "thi-ap33:5.4_0": "bhojayissāmi khattiya’.",
  "thi-ap33:6.1_0": "Adāsi me tadā rājā,",
  "thi-ap33:6.2_0": "samaṇaṁ bhāvitindriyaṁ;",
  "thi-ap33:6.3_0": "Tassa pattaṁ gahetvāna,",
  "thi-ap33:6.4_0": "paramannena pūrayiṁ.",
  "thi-ap33:7.1_0": "Pūretvā paramaṁ annaṁ,",
  "thi-ap33:7.2_0": "saha sugandhalepanaṁ;",
  "thi-ap33:7.3_0": "Mahācelena chāditvā,",
  "thi-ap33:7.4_0": "adāsiṁ tuṭṭhamānasā.",
  "thi-ap33:8.1_0": "Tena kammena sukatena,",
  "thi-ap33:8.2_0": "cetanāpaṇidhīhi ca;",
  "thi-ap33:8.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap33:8.4_0": "tāvatiṁsamagacchahaṁ.",
  "thi-ap33:9.1_0": "Sahassadevarājūnaṁ,",
  "thi-ap33:9.2_0": "mahesittamakārayiṁ;",
  "thi-ap33:9.3_0": "Sahassacakkavattīnaṁ,",
  "thi-ap33:9.4_0": "mahesittamakārayiṁ.",
  "thi-ap33:10.1_0": "Padesarajjaṁ vipulaṁ,",
  "thi-ap33:10.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "thi-ap33:10.3_0": "Nānāvidhaṁ bahuṁ aññaṁ,",
  "thi-ap33:10.4_0": "tassa kammaphalaṁ tato.",
  "thi-ap33:11.1_0": "Uppalasseva me vaṇṇo,",
  "thi-ap33:11.2_0": "abhirūpā sudassanā;",
  "thi-ap33:11.3_0": "Itthisabbaṅgasampannā,",
  "thi-ap33:11.4_0": "abhijātā jutindharā.",
  "thi-ap33:12.1_0": "Pacchime bhave sampatte,",
  "thi-ap33:12.2_0": "ajāyiṁ sākiye kule;",
  "thi-ap33:12.3_0": "Nārīsahassapāmokkhā,",
  "thi-ap33:12.4_0": "suddhodanasutassahaṁ.",
  "thi-ap33:13.1_0": "Nibbinditvā agārehaṁ,",
  "thi-ap33:13.2_0": "pabbajiṁ anagāriyaṁ;",
  "thi-ap33:13.3_0": "Sattamīrattisampattā,",
  "thi-ap33:13.4_0": "catusaccamapāpuṇiṁ.",
  "thi-ap33:14.1_0": "Cīvaraṁ piṇḍapātañca,",
  "thi-ap33:14.2_0": "paccayaṁ sayanāsanaṁ;",
  "thi-ap33:14.3_0": "Parimetuṁ na sakkomi,",
  "thi-ap33:14.4_0": "piṇḍapātassidaṁ phalaṁ.",
  "thi-ap33:15.1_0": "Yaṁ mayhaṁ pūritaṁ kammaṁ,",
  "thi-ap33:15.2_0": "Kusalaṁ sarase muni;",
  "thi-ap33:15.3_0": "Tuyhatthāya mahāvīra,",
  "thi-ap33:15.4_0": "Paricattaṁ bahuṁ mayā.",
  "thi-ap33:16.1_0": "Ekattiṁse ito kappe,",
  "thi-ap33:16.2_0": "yaṁ dānamadadiṁ tadā;",
  "thi-ap33:16.3_0": "Duggatiṁ nābhijānāmi,",
  "thi-ap33:16.4_0": "piṇḍapātassidaṁ phalaṁ.",
  "thi-ap33:17.1_0": "Dve gatiyo pajānāmi,",
  "thi-ap33:17.2_0": "devattaṁ atha mānusaṁ;",
  "thi-ap33:17.3_0": "Aññaṁ gatiṁ na jānāmi,",
  "thi-ap33:17.4_0": "piṇḍapātassidaṁ phalaṁ.",
  "thi-ap33:18.1_0": "Ucce kule pajānāmi,",
  "thi-ap33:18.2_0": "mahāsāle mahaddhane;",
  "thi-ap33:18.3_0": "Aññe kule na jānāmi,",
  "thi-ap33:18.4_0": "piṇḍapātassidaṁ phalaṁ.",
  "thi-ap33:19.1_0": "Bhavābhave saṁsaritvā,",
  "thi-ap33:19.2_0": "sukkamūlena coditā;",
  "thi-ap33:19.3_0": "Amanāpaṁ na passāmi,",
  "thi-ap33:19.4_0": "somanassakataṁ phalaṁ.",
  "thi-ap33:20.1_0": "Iddhīsu ca vasī homi,",
  "thi-ap33:20.2_0": "dibbāya sotadhātuyā;",
  "thi-ap33:20.3_0": "Cetopariyañāṇassa,",
  "thi-ap33:20.4_0": "vasī homi mahāmune.",
  "thi-ap33:21.1_0": "Pubbenivāsaṁ jānāmi,",
  "thi-ap33:21.2_0": "dibbacakkhu visodhitaṁ;",
  "thi-ap33:21.3_0": "Sabbāsavā parikkhīṇā,",
  "thi-ap33:21.4_0": "natthi dāni punabbhavo.",
  "thi-ap33:22.1_0": "Atthadhammaniruttīsu,",
  "thi-ap33:22.2_0": "paṭibhāne tatheva ca;",
  "thi-ap33:22.3_0": "Ñāṇaṁ mama mahāvīra,",
  "thi-ap33:22.4_0": "uppannaṁ tava santike.",
  "thi-ap33:23.1_0": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap33:23.2_0": "…pe…",
  "thi-ap33:23.3_0": "viharāmi anāsavā.",
  "thi-ap33:24.1_0": "Svāgataṁ vata me āsi,",
  "thi-ap33:24.2_0": "…pe…",
  "thi-ap33:24.3_0": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap33:25.1_0": "Paṭisambhidā catasso,",
  "thi-ap33:25.2_0": "…pe…",
  "thi-ap33:25.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "thi-ap33:26.1_0": "Itthaṁ sudaṁ uppaladāyikā bhikkhunī bhagavato sammukhā imā gāthāyo abhāsitthāti.",
  "thi-ap33:27.1_0": "Uppaladāyikātheriyāpadānaṁ tatiyaṁ."
}