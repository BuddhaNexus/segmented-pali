{
  "tha-ap546:0.1_0": "Therāpadāna",
  "tha-ap546:0.2_0": "Bhaddiyavagga",
  "tha-ap546:0.3_0": "4. Vaṅgīsattheraapadāna",
  "tha-ap546:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap546:1.2_0": "sabbadhammesu cakkhumā;",
  "tha-ap546:1.3_0": "Ito satasahassamhi,",
  "tha-ap546:1.4_0": "kappe uppajji nāyako.",
  "tha-ap546:2.1_0": "Yathāpi sāgare ūmi,",
  "tha-ap546:2.2_0": "gagane viya tārakā;",
  "tha-ap546:2.3_0": "Evaṁ pāvacanaṁ tassa,",
  "tha-ap546:2.4_0": "arahantehi cittitaṁ.",
  "tha-ap546:3.1_0": "Sadevāsuranāgehi,",
  "tha-ap546:3.2_0": "manujehi purakkhato;",
  "tha-ap546:3.3_0": "Samaṇabrāhmaṇākiṇṇe,",
  "tha-ap546:3.4_0": "janamajjhe jinuttamo.",
  "tha-ap546:4.1_0": "Pabhāhi anurañjanto,",
  "tha-ap546:4.2_0": "loke lokantagū jino;",
  "tha-ap546:4.3_0": "Vacanena vibodhento,",
  "tha-ap546:4.4_0": "veneyyapadumāni so.",
  "tha-ap546:5.1_0": "Vesārajjehi sampanno,",
  "tha-ap546:5.2_0": "catūhi purisuttamo;",
  "tha-ap546:5.3_0": "Pahīnabhayasārajjo,",
  "tha-ap546:5.4_0": "khemappatto visārado.",
  "tha-ap546:6.1_0": "Āsabhaṁ pavaraṁ ṭhānaṁ,",
  "tha-ap546:6.2_0": "buddhabhūmiñca kevalaṁ;",
  "tha-ap546:6.3_0": "Paṭijānāti lokaggo,",
  "tha-ap546:6.4_0": "natthi sañcodako kvaci.",
  "tha-ap546:7.1_0": "Sīhanādamasambhītaṁ,",
  "tha-ap546:7.2_0": "nadato tassa tādino;",
  "tha-ap546:7.3_0": "Devo naro vā brahmā vā,",
  "tha-ap546:7.4_0": "paṭivattā na vijjati.",
  "tha-ap546:8.1_0": "Desento pavaraṁ dhammaṁ,",
  "tha-ap546:8.2_0": "santārento sadevakaṁ;",
  "tha-ap546:8.3_0": "Dhammacakkaṁ pavatteti,",
  "tha-ap546:8.4_0": "parisāsu visārado.",
  "tha-ap546:9.1_0": "Paṭibhānavataṁ aggaṁ,",
  "tha-ap546:9.2_0": "sāvakaṁ sādhusammataṁ;",
  "tha-ap546:9.3_0": "Guṇaṁ bahuṁ pakittetvā,",
  "tha-ap546:9.4_0": "etadagge ṭhapesi taṁ.",
  "tha-ap546:10.1_0": "Tadāhaṁ haṁsavatiyaṁ,",
  "tha-ap546:10.2_0": "brāhmaṇo sādhusammato;",
  "tha-ap546:10.3_0": "Sabbavedavidū jāto,",
  "tha-ap546:10.4_0": "vāgīso vādisūdano.",
  "tha-ap546:11.1_0": "Upecca taṁ mahāvīraṁ,",
  "tha-ap546:11.2_0": "sutvāhaṁ dhammadesanaṁ;",
  "tha-ap546:11.3_0": "Pītivaraṁ paṭilabhiṁ,",
  "tha-ap546:11.4_0": "sāvakassa guṇe rato.",
  "tha-ap546:12.1_0": "Nimantetvāva sugataṁ,",
  "tha-ap546:12.2_0": "sasaṅghaṁ lokanandanaṁ;",
  "tha-ap546:12.3_0": "Sattāhaṁ bhojayitvāhaṁ,",
  "tha-ap546:12.4_0": "dussehacchādayiṁ tadā.",
  "tha-ap546:13.1_0": "Nipacca sirasā pāde,",
  "tha-ap546:13.2_0": "katokāso katañjalī;",
  "tha-ap546:13.3_0": "Ekamantaṁ ṭhito haṭṭho,",
  "tha-ap546:13.4_0": "santhaviṁ jinamuttamaṁ.",
  "tha-ap546:14.1_0": "‘Namo te vādimaddana,",
  "tha-ap546:14.2_0": "namo te isisattama;",
  "tha-ap546:14.3_0": "Namo te sabbalokagga,",
  "tha-ap546:14.4_0": "namo te abhayaṁ kara.",
  "tha-ap546:15.1_0": "Namo te māramathana,",
  "tha-ap546:15.2_0": "namo te diṭṭhisūdana;",
  "tha-ap546:15.3_0": "Namo te santisukhada,",
  "tha-ap546:15.4_0": "namo te saraṇaṁ kara.",
  "tha-ap546:16.1_0": "Anāthānaṁ bhavaṁ nātho,",
  "tha-ap546:16.2_0": "bhītānaṁ abhayappado;",
  "tha-ap546:16.3_0": "Vissāmabhūmi santānaṁ,",
  "tha-ap546:16.4_0": "saraṇaṁ saraṇesinaṁ’.",
  "tha-ap546:17.1_0": "Evamādīhi sambuddhaṁ,",
  "tha-ap546:17.2_0": "santhavitvā mahāguṇaṁ;",
  "tha-ap546:17.3_0": "Avocaṁ vādisūdassa,",
  "tha-ap546:17.4_0": "gatiṁ pappomi bhikkhuno.",
  "tha-ap546:18.1_0": "Tadā avoca bhagavā,",
  "tha-ap546:18.2_0": "anantapaṭibhānavā;",
  "tha-ap546:18.3_0": "‘Yo so buddhaṁ abhojesi,",
  "tha-ap546:18.4_0": "sattāhaṁ sahasāvakaṁ.",
  "tha-ap546:19.1_0": "Guṇañca me pakittesi,",
  "tha-ap546:19.2_0": "pasanno sehi pāṇibhi;",
  "tha-ap546:19.3_0": "Eso patthayate ṭhānaṁ,",
  "tha-ap546:19.4_0": "vādisūdassa bhikkhuno.",
  "tha-ap546:20.1_0": "Anāgatamhi addhāne,",
  "tha-ap546:20.2_0": "lacchase taṁ manorathaṁ;",
  "tha-ap546:20.3_0": "Devamānusasampattiṁ,",
  "tha-ap546:20.4_0": "anubhotvā anappakaṁ.",
  "tha-ap546:21.1_0": "Satasahassito kappe,",
  "tha-ap546:21.2_0": "okkākakulasambhavo;",
  "tha-ap546:21.3_0": "Gotamo nāma gottena,",
  "tha-ap546:21.4_0": "satthā loke bhavissati.",
  "tha-ap546:22.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap546:22.2_0": "oraso dhammanimmito;",
  "tha-ap546:22.3_0": "Vaṅgīso nāma nāmena,",
  "tha-ap546:22.4_0": "hessati satthu sāvako’.",
  "tha-ap546:23.1_0": "Taṁ sutvā mudito hutvā,",
  "tha-ap546:23.2_0": "yāvajīvaṁ tadā jinaṁ;",
  "tha-ap546:23.3_0": "Paccayehi upaṭṭhāsiṁ,",
  "tha-ap546:23.4_0": "mettacitto tathāgataṁ.",
  "tha-ap546:24.1_0": "Tena kammena sukatena,",
  "tha-ap546:24.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap546:24.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap546:24.4_0": "tusitaṁ agamāsahaṁ.",
  "tha-ap546:25.1_0": "Pacchime ca bhave dāni,",
  "tha-ap546:25.2_0": "jāto vippakule ahaṁ;",
  "tha-ap546:25.3_0": "Paccājāto yadā āsiṁ,",
  "tha-ap546:25.4_0": "jātiyā sattavassiko.",
  "tha-ap546:26.1_0": "Sabbavedavidū jāto,",
  "tha-ap546:26.2_0": "vādasatthavisārado;",
  "tha-ap546:26.3_0": "Vādissaro cittakathī,",
  "tha-ap546:26.4_0": "paravādappamaddano.",
  "tha-ap546:27.1_0": "Vaṅge jātoti vaṅgīso,",
  "tha-ap546:27.2_0": "vacane issaroti vā;",
  "tha-ap546:27.3_0": "Vaṅgīso iti me nāmaṁ,",
  "tha-ap546:27.4_0": "abhavī lokasammataṁ.",
  "tha-ap546:28.1_0": "Yadāhaṁ viññutaṁ patto,",
  "tha-ap546:28.2_0": "ṭhito paṭhamayobbane;",
  "tha-ap546:28.3_0": "Tadā rājagahe ramme,",
  "tha-ap546:28.4_0": "sāriputtamahaddasaṁ.",
  "tha-ap546:29.1_0": "Pañcavīsatimaṁ bhāṇavāraṁ.",
  "tha-ap546:30.1_0": "Piṇḍāya vicarantaṁ taṁ,",
  "tha-ap546:30.2_0": "pattapāṇiṁ susaṁvutaṁ;",
  "tha-ap546:30.3_0": "Alolakkhiṁ mitabhāṇiṁ,",
  "tha-ap546:30.4_0": "yugamattaṁ nidakkhitaṁ.",
  "tha-ap546:31.1_0": "Taṁ disvā vimhito hutvā,",
  "tha-ap546:31.2_0": "avocaṁ mamanucchavaṁ;",
  "tha-ap546:31.3_0": "Kaṇikāraṁva nicitaṁ,",
  "tha-ap546:31.4_0": "cittaṁ gāthāpadaṁ ahaṁ.",
  "tha-ap546:32.1_0": "Ācikkhi so me satthāraṁ,",
  "tha-ap546:32.2_0": "sambuddhaṁ lokanāyakaṁ;",
  "tha-ap546:32.3_0": "Tadā so paṇḍito vīro,",
  "tha-ap546:32.4_0": "uttariṁ samavoca me.",
  "tha-ap546:33.1_0": "Virāgasaṁhitaṁ vākyaṁ,",
  "tha-ap546:33.2_0": "katvā duddasamuttamaṁ;",
  "tha-ap546:33.3_0": "Vicittapaṭibhānehi,",
  "tha-ap546:33.4_0": "tosito tena tādinā.",
  "tha-ap546:34.1_0": "Nipacca sirasā pāde,",
  "tha-ap546:34.2_0": "‘pabbājehī’ti maṁ bravi;",
  "tha-ap546:34.3_0": "Tato maṁ sa mahāpañño,",
  "tha-ap546:34.4_0": "buddhaseṭṭhamupānayi.",
  "tha-ap546:35.1_0": "Nipacca sirasā pāde,",
  "tha-ap546:35.2_0": "nisīdiṁ satthu santike;",
  "tha-ap546:35.3_0": "Mamāha vadataṁ seṭṭho,",
  "tha-ap546:35.4_0": "‘kacci vaṅgīsa jānāsi’.",
  "tha-ap546:36.1_0": "Kiñci sippanti tassāhaṁ,",
  "tha-ap546:36.2_0": "‘jānāmī’ti ca abraviṁ;",
  "tha-ap546:36.3_0": "‘Matasīsaṁ vanacchuddhaṁ,",
  "tha-ap546:36.4_0": "api bārasavassikaṁ;",
  "tha-ap546:36.5_0": "Tava vijjāvisesena,",
  "tha-ap546:36.6_0": "sace sakkosi vācaya’.",
  "tha-ap546:37.1_0": "‘Āmoti me paṭiññāte,",
  "tha-ap546:37.2_0": "tīṇi sīsāni dassayi;",
  "tha-ap546:37.3_0": "Nirayanaradevesu,",
  "tha-ap546:37.4_0": "upapanne avācayiṁ’.",
  "tha-ap546:38.1_0": "Tadā khīṇāsavasseva,",
  "tha-ap546:38.2_0": "sīsaṁ dassesi nāyako;",
  "tha-ap546:38.3_0": "Tatohaṁ vihatārambho,",
  "tha-ap546:38.4_0": "pabbajjaṁ samayācisaṁ.",
  "tha-ap546:39.1_0": "Pabbajitvāna sugataṁ,",
  "tha-ap546:39.2_0": "santhavāmi tahiṁ tahiṁ;",
  "tha-ap546:39.3_0": "Tato maṁ kabbavittosi,",
  "tha-ap546:39.4_0": "ujjhāyantiha bhikkhavo.",
  "tha-ap546:40.1_0": "Tato vīmaṁsanatthaṁ me,",
  "tha-ap546:40.2_0": "āha buddho vināyako;",
  "tha-ap546:40.3_0": "‘Takkikā panimā gāthā,",
  "tha-ap546:40.4_0": "ṭhānaso paṭibhanti taṁ’.",
  "tha-ap546:41.1_0": "‘Na kabbavittohaṁ vīra,",
  "tha-ap546:41.2_0": "ṭhānaso paṭibhanti maṁ’;",
  "tha-ap546:41.3_0": "‘Tena hi dāni vaṅgīsa,",
  "tha-ap546:41.4_0": "ṭhānaso santhavāhi maṁ’.",
  "tha-ap546:42.1_0": "Tadāhaṁ santhaviṁ vīraṁ,",
  "tha-ap546:42.2_0": "gāthāhi isisattamaṁ;",
  "tha-ap546:42.3_0": "Ṭhānaso me tadā tuṭṭho,",
  "tha-ap546:42.4_0": "jino agge ṭhapesi maṁ.",
  "tha-ap546:43.1_0": "Paṭibhānena cittena,",
  "tha-ap546:43.2_0": "aññesamatimaññahaṁ;",
  "tha-ap546:43.3_0": "Pesale tena saṁviggo,",
  "tha-ap546:43.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap546:44.1_0": "‘Paṭibhānavataṁ aggo,",
  "tha-ap546:44.2_0": "añño koci na vijjati;",
  "tha-ap546:44.3_0": "Yathāyaṁ bhikkhu vaṅgīso,",
  "tha-ap546:44.4_0": "evaṁ dhāretha bhikkhavo’.",
  "tha-ap546:45.1_0": "Satasahasse kataṁ kammaṁ,",
  "tha-ap546:45.2_0": "phalaṁ dassesi me idha;",
  "tha-ap546:45.3_0": "Sumutto saravegova,",
  "tha-ap546:45.4_0": "kilese jhāpayiṁ mama.",
  "tha-ap546:46.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap546:46.2_0": "…pe…",
  "tha-ap546:46.3_0": "viharāmi anāsavo.",
  "tha-ap546:47.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap546:47.2_0": "…pe…",
  "tha-ap546:47.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap546:48.1_0": "Paṭisambhidā catasso,",
  "tha-ap546:48.2_0": "…pe…",
  "tha-ap546:48.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap546:49.1_0": "Itthaṁ sudaṁ āyasmā vaṅgīso thero imā gāthāyo abhāsitthāti.",
  "tha-ap546:50.1_0": "Vaṅgīsattherassāpadānaṁ catutthaṁ."
}