{
  "tha-ap449:0.1_0": "Therāpadāna",
  "tha-ap449:0.2_0": "Vibhītakavagga",
  "tha-ap449:0.3_0": "7. Sīhāsanikattheraapadāna",
  "tha-ap449:1.1_0": "“Padumuttarassa bhagavato,",
  "tha-ap449:1.2_0": "Sabbabhūtahitesino;",
  "tha-ap449:1.3_0": "Pasannacitto sumano,",
  "tha-ap449:1.4_0": "Sīhāsanamadāsahaṁ.",
  "tha-ap449:2.1_0": "Devaloke manusse vā,",
  "tha-ap449:2.2_0": "yattha yattha vasāmahaṁ;",
  "tha-ap449:2.3_0": "Labhāmi vipulaṁ byamhaṁ,",
  "tha-ap449:2.4_0": "sīhāsanassidaṁ phalaṁ.",
  "tha-ap449:3.1_0": "Soṇṇamayā rūpimayā,",
  "tha-ap449:3.2_0": "lohitaṅgamayā bahū;",
  "tha-ap449:3.3_0": "Maṇimayā ca pallaṅkā,",
  "tha-ap449:3.4_0": "nibbattanti mamaṁ sadā.",
  "tha-ap449:4.1_0": "Bodhiyā āsanaṁ katvā,",
  "tha-ap449:4.2_0": "jalajuttamanāmino;",
  "tha-ap449:4.3_0": "Ucce kule pajāyāmi,",
  "tha-ap449:4.4_0": "aho dhammasudhammatā.",
  "tha-ap449:5.1_0": "Satasahassito kappe,",
  "tha-ap449:5.2_0": "sīhāsanamakāsahaṁ;",
  "tha-ap449:5.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap449:5.4_0": "sīhāsanassidaṁ phalaṁ.",
  "tha-ap449:6.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap449:6.2_0": "…pe…",
  "tha-ap449:6.3_0": "viharāmi anāsavo.",
  "tha-ap449:7.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap449:7.2_0": "…pe…",
  "tha-ap449:7.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap449:8.1_0": "Paṭisambhidā catasso,",
  "tha-ap449:8.2_0": "…pe…",
  "tha-ap449:8.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap449:9.1_0": "Itthaṁ sudaṁ āyasmā sīhāsaniko thero imā gāthāyo abhāsitthāti.",
  "tha-ap449:10.1_0": "Sīhāsanikattherassāpadānaṁ sattamaṁ."
}