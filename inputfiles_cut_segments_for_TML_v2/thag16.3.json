{
  "thag16.3:0.1_0": "Theragāthā",
  "thag16.3:0.2_0": "Vīsatinipāta",
  "thag16.3:0.3_0": "Paṭhamavagga",
  "thag16.3:0.4_0": "16.3. Telakānittheragāthā",
  "thag16.3:1.1_0": "“Cirarattaṁ vatātāpī,",
  "thag16.3:1.2_0": "dhammaṁ anuvicintayaṁ;",
  "thag16.3:1.3_0": "Samaṁ cittassa nālatthaṁ,",
  "thag16.3:1.4_0": "pucchaṁ samaṇabrāhmaṇe.",
  "thag16.3:2.1_0": "‘Ko so pāraṅgato loke,",
  "thag16.3:2.2_0": "ko patto amatogadhaṁ;",
  "thag16.3:2.3_0": "Kassa dhammaṁ paṭicchāmi,",
  "thag16.3:2.4_0": "paramatthavijānanaṁ’.",
  "thag16.3:3.1_0": "Antovaṅkagato āsi,",
  "thag16.3:3.2_0": "macchova ghasamāmisaṁ;",
  "thag16.3:3.3_0": "Baddho mahindapāsena,",
  "thag16.3:3.4_0": "vepacityasuro yathā.",
  "thag16.3:4.1_0": "Añchāmi naṁ na muñcāmi,",
  "thag16.3:4.2_0": "asmā sokapariddavā;",
  "thag16.3:4.3_0": "Ko me bandhaṁ muñcaṁ loke,",
  "thag16.3:4.4_0": "sambodhiṁ vedayissati.",
  "thag16.3:5.1_0": "Samaṇaṁ brāhmaṇaṁ vā kaṁ,",
  "thag16.3:5.2_0": "ādisantaṁ pabhaṅgunaṁ;",
  "thag16.3:5.3_0": "Kassa dhammaṁ paṭicchāmi,",
  "thag16.3:5.4_0": "jarāmaccupavāhanaṁ.",
  "thag16.3:6.1_0": "Vicikicchākaṅkhāganthitaṁ,",
  "thag16.3:6.2_0": "sārambhabalasaññutaṁ;",
  "thag16.3:6.3_0": "Kodhappattamanatthaddhaṁ,",
  "thag16.3:6.4_0": "abhijappappadāraṇaṁ.",
  "thag16.3:7.1_0": "Taṇhādhanusamuṭṭhānaṁ,",
  "thag16.3:7.2_0": "dve ca pannarasāyutaṁ;",
  "thag16.3:7.3_0": "Passa orasikaṁ bāḷhaṁ,",
  "thag16.3:7.4_0": "bhetvāna yadi tiṭṭhati.",
  "thag16.3:8.1_0": "Anudiṭṭhīnaṁ appahānaṁ,",
  "thag16.3:8.2_0": "saṅkappaparatejitaṁ;",
  "thag16.3:8.3_0": "Tena viddho pavedhāmi,",
  "thag16.3:8.4_0": "pattaṁva māluteritaṁ.",
  "thag16.3:9.1_0": "Ajjhattaṁ me samuṭṭhāya,",
  "thag16.3:9.2_0": "khippaṁ paccati māmakaṁ;",
  "thag16.3:9.3_0": "Chaphassāyatanī kāyo,",
  "thag16.3:9.4_0": "yattha sarati sabbadā.",
  "thag16.3:10.1_0": "Taṁ na passāmi tekicchaṁ,",
  "thag16.3:10.2_0": "yo metaṁ sallamuddhare;",
  "thag16.3:10.3_0": "Nānārajjena satthena,",
  "thag16.3:10.4_0": "nāññena vicikicchitaṁ.",
  "thag16.3:11.1_0": "Ko me asattho avaṇo,",
  "thag16.3:11.2_0": "Sallamabbhantarapassayaṁ;",
  "thag16.3:11.3_0": "Ahiṁsaṁ sabbagattāni,",
  "thag16.3:11.4_0": "Sallaṁ me uddharissati.",
  "thag16.3:12.1_0": "Dhammappati hi so seṭṭho,",
  "thag16.3:12.2_0": "visadosappavāhako;",
  "thag16.3:12.3_0": "Gambhīre patitassa me,",
  "thag16.3:12.4_0": "thalaṁ pāṇiñca dassaye.",
  "thag16.3:13.1_0": "Rahadehamasmi ogāḷho,",
  "thag16.3:13.2_0": "ahāriyarajamattike;",
  "thag16.3:13.3_0": "Māyāusūyasārambha,",
  "thag16.3:13.4_0": "thinamiddhamapatthaṭe.",
  "thag16.3:14.1_0": "Uddhaccameghathanitaṁ,",
  "thag16.3:14.2_0": "saṁyojanavalāhakaṁ;",
  "thag16.3:14.3_0": "Vāhā vahanti kuddiṭṭhiṁ,",
  "thag16.3:14.4_0": "saṅkappā rāganissitā.",
  "thag16.3:15.1_0": "Savanti sabbadhi sotā,",
  "thag16.3:15.2_0": "latā ubbhijja tiṭṭhati;",
  "thag16.3:15.3_0": "Te sote ko nivāreyya,",
  "thag16.3:15.4_0": "taṁ lataṁ ko hi checchati.",
  "thag16.3:16.1_0": "Velaṁ karotha bhaddante,",
  "thag16.3:16.2_0": "sotānaṁ sannivāraṇaṁ;",
  "thag16.3:16.3_0": "Mā te manomayo soto,",
  "thag16.3:16.4_0": "rukkhaṁva sahasā luve.",
  "thag16.3:17.1_0": "Evaṁ me bhayajātassa,",
  "thag16.3:17.2_0": "apārā pāramesato;",
  "thag16.3:17.3_0": "Tāṇo paññāvudho satthā,",
  "thag16.3:17.4_0": "isisaṅghanisevito.",
  "thag16.3:18.1_0": "Sopāṇaṁ sugataṁ suddhaṁ,",
  "thag16.3:18.2_0": "dhammasāramayaṁ daḷhaṁ;",
  "thag16.3:18.3_0": "Pādāsi vuyhamānassa,",
  "thag16.3:18.4_0": "‘mā bhāyī’ti ca mabravi.",
  "thag16.3:19.1_0": "Satipaṭṭhānapāsādaṁ,",
  "thag16.3:19.2_0": "āruyha paccavekkhisaṁ;",
  "thag16.3:19.3_0": "Yaṁ taṁ pubbe amaññissaṁ,",
  "thag16.3:19.4_0": "sakkāyābhirataṁ pajaṁ.",
  "thag16.3:20.1_0": "Yadā ca maggamaddakkhiṁ,",
  "thag16.3:20.2_0": "nāvāya abhirūhanaṁ;",
  "thag16.3:20.3_0": "Anadhiṭṭhāya attānaṁ,",
  "thag16.3:20.4_0": "titthamaddakkhimuttamaṁ.",
  "thag16.3:21.1_0": "Sallaṁ attasamuṭṭhānaṁ,",
  "thag16.3:21.2_0": "bhavanettippabhāvitaṁ;",
  "thag16.3:21.3_0": "Etesaṁ appavattāya,",
  "thag16.3:21.4_0": "desesi maggamuttamaṁ.",
  "thag16.3:22.1_0": "Dīgharattānusayitaṁ,",
  "thag16.3:22.2_0": "cirarattamadhiṭṭhitaṁ;",
  "thag16.3:22.3_0": "Buddho mepānudī ganthaṁ,",
  "thag16.3:22.4_0": "visadosappavāhano”ti.",
  "thag16.3:22.5_0": "… Telakāni thero …."
}