{
  "tha-ap216:0.1_0": "Therāpadāna",
  "tha-ap216:0.2_0": "Hatthivagga",
  "tha-ap216:0.3_0": "4. Ekasaññakattheraapadāna",
  "tha-ap216:1.1_0": "“Dumagge paṁsukūlikaṁ,",
  "tha-ap216:1.2_0": "laggaṁ disvāna satthuno;",
  "tha-ap216:1.3_0": "Añjaliṁ paggahetvāna,",
  "tha-ap216:1.4_0": "paṁsukūlaṁ avandahaṁ.",
  "tha-ap216:2.1_0": "Ekattiṁse ito kappe,",
  "tha-ap216:2.2_0": "yaṁ saññamalabhiṁ tadā;",
  "tha-ap216:2.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap216:2.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap216:3.1_0": "Pañcavīse ito kappe,",
  "tha-ap216:3.2_0": "eko āsiṁ janādhipo;",
  "tha-ap216:3.3_0": "Amitābhoti nāmena,",
  "tha-ap216:3.4_0": "cakkavattī mahabbalo.",
  "tha-ap216:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap216:4.2_0": "…pe…",
  "tha-ap216:4.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap216:5.1_0": "Itthaṁ sudaṁ āyasmā ekasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap216:6.1_0": "Ekasaññakattherassāpadānaṁ catutthaṁ."
}