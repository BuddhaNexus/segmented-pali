{
  "pv30:0.1_0": "Petavatthu",
  "pv30:0.2_0": "Cūḷavagga",
  "pv30:0.3_0": "5. Kumārapetavatthu",
  "pv30:1.1_0": "Accherarūpaṁ sugatassa ñāṇaṁ,",
  "pv30:1.2_0": "Satthā yathā puggalaṁ byākāsi;",
  "pv30:1.3_0": "Ussannapuññāpi bhavanti heke,",
  "pv30:1.4_0": "Parittapuññāpi bhavanti heke.",
  "pv30:2.1_0": "Ayaṁ kumāro sīvathikāya chaḍḍito,",
  "pv30:2.2_0": "Aṅguṭṭhasnehena yāpeti rattiṁ;",
  "pv30:2.3_0": "Na yakkhabhūtā na sarīsapā vā,",
  "pv30:2.4_0": "Viheṭhayeyyuṁ katapuññaṁ kumāraṁ.",
  "pv30:3.1_0": "Sunakhāpimassa palihiṁsu pāde,",
  "pv30:3.2_0": "Dhaṅkā siṅgālā parivattayanti;",
  "pv30:3.3_0": "Gabbhāsayaṁ pakkhigaṇā haranti,",
  "pv30:3.4_0": "Kākā pana akkhimalaṁ haranti.",
  "pv30:4.1_0": "Nayimassa rakkhaṁ vidahiṁsu keci,",
  "pv30:4.2_0": "Na osadhaṁ sāsapadhūpanaṁ vā;",
  "pv30:4.3_0": "Nakkhattayogampi na aggahesuṁ,",
  "pv30:4.4_0": "Na sabbadhaññānipi ākiriṁsu.",
  "pv30:5.1_0": "Etādisaṁ uttamakicchapattaṁ,",
  "pv30:5.2_0": "Rattābhataṁ sīvathikāya chaḍḍitaṁ;",
  "pv30:5.3_0": "Nonītapiṇḍaṁva pavedhamānaṁ,",
  "pv30:5.4_0": "Sasaṁsayaṁ jīvitasāvasesaṁ.",
  "pv30:6.1_0": "Tamaddasā devamanussapūjito,",
  "pv30:6.2_0": "Disvā ca taṁ byākari bhūripañño;",
  "pv30:6.3_0": "“Ayaṁ kumāro nagarassimassa,",
  "pv30:6.4_0": "Aggakuliko bhavissati bhogato ca”.",
  "pv30:7.1_0": "“Kissa vataṁ kiṁ pana brahmacariyaṁ,",
  "pv30:7.2_0": "Kissa suciṇṇassa ayaṁ vipāko;",
  "pv30:7.3_0": "Etādisaṁ byasanaṁ pāpuṇitvā,",
  "pv30:7.4_0": "Taṁ tādisaṁ paccanubhossatiddhin”ti.",
  "pv30:8.1_0": "Buddhapamukhassa bhikkhusaṅghassa,",
  "pv30:8.2_0": "Pūjaṁ akāsi janatā uḷāraṁ;",
  "pv30:8.3_0": "Tatrassa cittassahu aññathattaṁ,",
  "pv30:8.4_0": "Vācaṁ abhāsi pharusaṁ asabbhaṁ.",
  "pv30:9.1_0": "So taṁ vitakkaṁ pavinodayitvā,",
  "pv30:9.2_0": "Pītiṁ pasādaṁ paṭiladdhā pacchā;",
  "pv30:9.3_0": "Tathāgataṁ jetavane vasantaṁ,",
  "pv30:9.4_0": "Yāguyā upaṭṭhāsi sattarattaṁ.",
  "pv30:10.1_0": "Tassa vataṁ taṁ pana brahmacariyaṁ,",
  "pv30:10.2_0": "Tassa suciṇṇassa ayaṁ vipāko;",
  "pv30:10.3_0": "Etādisaṁ byasanaṁ pāpuṇitvā,",
  "pv30:10.4_0": "Taṁ tādisaṁ paccanubhossatiddhiṁ.",
  "pv30:11.1_0": "Ṭhatvāna so vassasataṁ idheva,",
  "pv30:11.2_0": "Sabbehi kāmehi samaṅgibhūto;",
  "pv30:11.3_0": "Kāyassa bhedā abhisamparāyaṁ,",
  "pv30:11.4_0": "Sahabyataṁ gacchati vāsavassāti.",
  "pv30:12.1_0": "Kumārapetavatthu pañcamaṁ."
}