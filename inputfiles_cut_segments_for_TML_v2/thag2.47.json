{
  "thag2.47:0.1_0": "Theragāthā",
  "thag2.47:0.2_0": "Dukanipāta",
  "thag2.47:0.3_0": "Pañcamavagga",
  "thag2.47:0.4_0": "2.47. Anūpamattheragāthā",
  "thag2.47:1.1_0": "“Nandamānāgataṁ cittaṁ,",
  "thag2.47:1.2_0": "sūlamāropamānakaṁ;",
  "thag2.47:1.3_0": "Tena teneva vajasi,",
  "thag2.47:1.4_0": "yena sūlaṁ kaliṅgaraṁ.",
  "thag2.47:2.1_0": "Tāhaṁ cittakaliṁ brūmi,",
  "thag2.47:2.2_0": "taṁ brūmi cittadubbhakaṁ;",
  "thag2.47:2.3_0": "Satthā te dullabho laddho,",
  "thag2.47:2.4_0": "mānatthe maṁ niyojayī”ti.",
  "thag2.47:2.5_0": "… Anūpamo thero …."
}