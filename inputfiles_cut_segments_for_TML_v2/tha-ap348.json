{
  "tha-ap348:0.1_0": "Therāpadāna",
  "tha-ap348:0.2_0": "Ekapadumiyavagga",
  "tha-ap348:0.3_0": "6. Campakapupphiyattheraapadāna",
  "tha-ap348:1.1_0": "“Himavantassāvidūre,",
  "tha-ap348:1.2_0": "jāpalo nāma pabbato;",
  "tha-ap348:1.3_0": "Buddho sudassano nāma,",
  "tha-ap348:1.4_0": "vihāsi pabbatantare.",
  "tha-ap348:2.1_0": "Pupphaṁ hemavantaṁ gayha,",
  "tha-ap348:2.2_0": "Gacchaṁ vehāyasenahaṁ;",
  "tha-ap348:2.3_0": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap348:2.4_0": "Oghatiṇṇamanāsavaṁ.",
  "tha-ap348:3.1_0": "Satta campakapupphāni,",
  "tha-ap348:3.2_0": "sīse katvānahaṁ tadā;",
  "tha-ap348:3.3_0": "Buddhassa abhiropesiṁ,",
  "tha-ap348:3.4_0": "sayambhussa mahesino.",
  "tha-ap348:4.1_0": "Ekattiṁse ito kappe,",
  "tha-ap348:4.2_0": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap348:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap348:4.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap348:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap348:5.2_0": "…pe…",
  "tha-ap348:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap348:6.1_0": "Itthaṁ sudaṁ āyasmā campakapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap348:7.1_0": "Campakapupphiyattherassāpadānaṁ chaṭṭhaṁ."
}