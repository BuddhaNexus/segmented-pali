{
  "anya-e1005n1:0": "Sujanakaṇḍo",
  "anya-e1005n1:1": "41.",
  "anya-e1005n1:2": " Sabbhireva samāsetha,",
  "anya-e1005n1:3": "Sabbhi kubbetha santhavaṃ;",
  "anya-e1005n1:4": "Sataṃ saddhammamaññāya,",
  "anya-e1005n1:5": "Seyyo hoti na pāpiyo.",
  "anya-e1005n1:6": "42.",
  "anya-e1005n1:7": " Caja dujjana saṃsaggaṃ,",
  "anya-e1005n1:8": "Bhaja sādhu samāgamaṃ;",
  "anya-e1005n1:9": "Kara puññamahorattiṃ,",
  "anya-e1005n1:10": "Sara niccamaniccataṃ.",
  "anya-e1005n1:11": "43.",
  "anya-e1005n1:12": " Yathā udumbarapakkā,",
  "anya-e1005n1:13": "Bahirattakamevaca;",
  "anya-e1005n1:14": "Anto kimīhi sampuṇṇā,",
  "anya-e1005n1:15": "Evaṃ dujjanahaddayā.",
  "anya-e1005n1:16": "44.",
  "anya-e1005n1:17": " Yathāpi panasāpakkā,",
  "anya-e1005n1:18": "Bahi kaṇḍakameva ca;",
  "anya-e1005n1:19": "Anto amatasampannā,",
  "anya-e1005n1:20": "Evaṃ sujanahadayā.",
  "anya-e1005n1:21": "45.",
  "anya-e1005n1:22": " Sukkhopi candanataru na jahāti gandhaṃ,",
  "anya-e1005n1:23": "Nāgo gato naramukhe na jahāti līḷaṃ;",
  "anya-e1005n1:24": "Yantāgato madhurasaṃ na jahāti ucchu,",
  "anya-e1005n1:25": "Dukkhopi paṇḍitajano na jahāti dhammaṃ.",
  "anya-e1005n1:26": "46.",
  "anya-e1005n1:27": " Sīho nāma jighacchāpi,",
  "anya-e1005n1:28": "Paṇṇādīni na khādati;",
  "anya-e1005n1:29": "Sīho nāma kisocāpi,",
  "anya-e1005n1:30": "Nāgamaṃsaṃ na khādati.",
  "anya-e1005n1:31": "47.",
  "anya-e1005n1:32": " Kula-jāto kula-putto,",
  "anya-e1005n1:33": "Kula-vaṃsa-surakkhato;",
  "anya-e1005n1:34": "Attanā dukkha-pattopi,",
  "anya-e1005n1:35": "Hīna-kammaṃ na kāraye.",
  "anya-e1005n1:36": "48.",
  "anya-e1005n1:37": " Candanaṃ sītalaṃ loke,",
  "anya-e1005n1:38": "Tato candaṃva sītalaṃ;",
  "anya-e1005n1:39": "Canda-candanasītamhā,",
  "anya-e1005n1:40": "Sādhu vākyaṃ subhāsitaṃ.",
  "anya-e1005n1:41": "49.",
  "anya-e1005n1:42": " Udeyya bhāṇu pacchime,",
  "anya-e1005n1:43": "Merurājā nameyyapi;",
  "anya-e1005n1:44": "Sītalā narakaggipi,",
  "anya-e1005n1:45": "Pabbatagge ca uppalaṃ.",
  "anya-e1005n1:46": "Vikase na viparītaṃ,",
  "anya-e1005n1:47": "Sādhuvāyyaṃ kudācanaṃ.",
  "anya-e1005n1:48": "50.",
  "anya-e1005n1:49": " Sukhā rukkhassa chāyāva,",
  "anya-e1005n1:50": "Tato ñāti mātā pitu;",
  "anya-e1005n1:51": "Tato ācariyo rañño,",
  "anya-e1005n1:52": "Tato buddhassanekadhā.",
  "anya-e1005n1:53": "51.",
  "anya-e1005n1:54": " Bhamarā pupphamicchanti,",
  "anya-e1005n1:55": "Guṇamicchanti sujanā;",
  "anya-e1005n1:56": "Makkhikā pūtimicchanti,",
  "anya-e1005n1:57": "Dosamicchanti dujjanā.",
  "anya-e1005n1:58": "52.",
  "anya-e1005n1:59": " Mātāhīnassa dubbhāsā,",
  "anya-e1005n1:60": "Pitāhīnassa dukriyā;",
  "anya-e1005n1:61": "Ubho mātā pitā hīnā,",
  "anya-e1005n1:62": "Dubbhasāca dukīriyā.",
  "anya-e1005n1:63": "53.",
  "anya-e1005n1:64": " Mātā seṭṭhassa subhāsā,",
  "anya-e1005n1:65": "Pitā seṭṭhassa sukriyā;",
  "anya-e1005n1:66": "Ubho mātā pitā seṭṭhā,",
  "anya-e1005n1:67": "Subhāsāca sukīriyā.",
  "anya-e1005n1:68": "54.",
  "anya-e1005n1:69": " Saṅgāme sūra-micchanti,",
  "anya-e1005n1:70": "Mantīsu akūtūhalaṃ;",
  "anya-e1005n1:71": "Piyañca annapānesu,",
  "anya-e1005n1:72": "Atthe jāte ca paṇḍitaṃ.",
  "anya-e1005n1:73": "55.",
  "anya-e1005n1:74": " Sunakho sunakhaṃ disvā,",
  "anya-e1005n1:75": "Dantaṃ dasseti hiṃsituṃ;",
  "anya-e1005n1:76": "Dujjano sujanaṃ disvā,",
  "anya-e1005n1:77": "Rosayaṃ hiṃsamicchati.",
  "anya-e1005n1:78": "56.",
  "anya-e1005n1:79": " Mā ca vegena kiccāni,",
  "anya-e1005n1:80": "Karosi kārāpesi vā;",
  "anya-e1005n1:81": "Sahasā kāritaṃ kammaṃ,",
  "anya-e1005n1:82": "Mando pacchānutappati.",
  "anya-e1005n1:83": "57.",
  "anya-e1005n1:84": " Kodhaṃ vihitvā na kadācinasoce,",
  "anya-e1005n1:85": "Makkhappahānaṃ isayo avaṇṇayuṃ;",
  "anya-e1005n1:86": "Sabbesa phārusa-vacaṃ khametha,",
  "anya-e1005n1:87": "Etaṃ khantiṃ uttamamāhu santo.",
  "anya-e1005n1:88": "58.",
  "anya-e1005n1:89": " Dukkho nivāso sambādhe,",
  "anya-e1005n1:90": "Ṭhāne asucisaṅkate;",
  "anya-e1005n1:91": "Tato arimhi appiye,",
  "anya-e1005n1:92": "Tatopi akataññunā.",
  "anya-e1005n1:93": "59.",
  "anya-e1005n1:94": " Ovādeyyānusāseyya,",
  "anya-e1005n1:95": "Gāpakā ca nivāraye;",
  "anya-e1005n1:96": "Satañhi so piyo hoti,",
  "anya-e1005n1:97": "Asataṃ hoti appiyo.",
  "anya-e1005n1:98": "60.",
  "anya-e1005n1:99": " Uttamattanivātena,",
  "anya-e1005n1:100": "Sūraṃ bhedena nijjaye;",
  "anya-e1005n1:101": "Nīcaṃ appaka dānena,",
  "anya-e1005n1:102": "Vīriyena samaṃ jaye.",
  "anya-e1005n1:103": "61.",
  "anya-e1005n1:104": " Na visaṃ visamiccāhu,",
  "anya-e1005n1:105": "Dhanaṃ saṅghassa uccate;",
  "anya-e1005n1:106": "Visaṃ ekaṃva hanati,",
  "anya-e1005n1:107": "Sabbaṃ saṅghassa santakaṃ.",
  "anya-e1005n1:108": "62.",
  "anya-e1005n1:109": " Javane bhadraṃ jānanti,",
  "anya-e1005n1:110": "Baliddañca vāhenā;",
  "anya-e1005n1:111": "Duhena dhenuṃ jānanti,",
  "anya-e1005n1:112": "Bhāsamānena paṇḍitaṃ.",
  "anya-e1005n1:113": "63.",
  "anya-e1005n1:114": " Dhanamappampi sādhūnaṃ,",
  "anya-e1005n1:115": "Kūpe vāriva nissayo;",
  "anya-e1005n1:116": "Bahuṃ api asādhūnaṃ,",
  "anya-e1005n1:117": "Naca vārīva aṇṇave.",
  "anya-e1005n1:118": "64.",
  "anya-e1005n1:119": " Najjo pivanti no āpaṃ,",
  "anya-e1005n1:120": "Rukkhā khādanti no phalaṃ;",
  "anya-e1005n1:121": "Vassanti kvaci no meghā,",
  "anya-e1005n1:122": "Paratthāya sataṃ dhanaṃ.",
  "anya-e1005n1:123": "65.",
  "anya-e1005n1:124": " Apattheyyaṃ na pattheyya,",
  "anya-e1005n1:125": "A cinteyyaṃ na cintaye;",
  "anya-e1005n1:126": "Dhammameva sucinteyya,",
  "anya-e1005n1:127": "Kālaṃ moghaṃ na accaye.",
  "anya-e1005n1:128": "66.",
  "anya-e1005n1:129": " Acintitampi bhavati,",
  "anya-e1005n1:130": "Cintitampi vinassati;",
  "anya-e1005n1:131": "Na hi cintāmayā bhogā,",
  "anya-e1005n1:132": "Itthiyā purisassavā.",
  "anya-e1005n1:133": "67.",
  "anya-e1005n1:134": " Asantassa piyo hoti,",
  "anya-e1005n1:135": "Sante na kurute piyaṃ;",
  "anya-e1005n1:136": "Asataṃ dhammaṃ roceti,",
  "anya-e1005n1:137": "Taṃ parābhavato mukhaṃ.",
  "anya-e1005n1:138": "Sujanakaṇḍo niṭṭhito."
}