{
  "anya-e0605n5:0": "Bodhisambhāradīpanīgāthā",
  "anya-e0605n5:1": "23.",
  "anya-e0605n5:2": " So dukkhakhinnajanadassanadukkhakhinno,",
  "anya-e0605n5:3": "Kāruññameva janatāya akāsi niccaṃ;",
  "anya-e0605n5:4": "Tesaṃ hi mocanamupāyamidanti ñatvā,",
  "anya-e0605n5:5": "Tādīparādhamapi attani ropayī so.",
  "anya-e0605n5:6": "24.",
  "anya-e0605n5:7": " Dānādinekavarapāramisāgaresu,",
  "anya-e0605n5:8": "Ogāḷhatāyapi paduṭṭhajanena dinnaṃ;",
  "anya-e0605n5:9": "Dukkhaṃ tathā atimahantatarampi kiñci,",
  "anya-e0605n5:10": "Nāññāsi sattahitamevea gavesayanto.",
  "anya-e0605n5:11": "25.",
  "anya-e0605n5:12": " Chetvāna sīsaṃ hi sakaṃ dadanto,",
  "anya-e0605n5:13": "Maṃsaṃ pacitvāna sakaṃ dadanto;",
  "anya-e0605n5:14": "So cattagatto paṇidhānakāle,",
  "anya-e0605n5:15": "Duṭṭhassa kiṃ dussati chedanena.",
  "anya-e0605n5:16": "26.",
  "anya-e0605n5:17": " Evaṃ anantamapi jātisatesu dukkhaṃ,",
  "anya-e0605n5:18": "Patvāna sattahitameva gavesayanto;",
  "anya-e0605n5:19": "Dīpaṅkare gahitasīlasamādhipaññaṃ,",
  "anya-e0605n5:20": "Pālesi yāva sakabodhitale suniṭṭho.",
  "anya-e0605n5:21": "27.",
  "anya-e0605n5:22": " Yadābhinīhāramakā sumedho,",
  "anya-e0605n5:23": "Yadā ca maddiṃ adadā sivindo;",
  "anya-e0605n5:24": "Etthantare jātisu kiñcipekaṃ,",
  "anya-e0605n5:25": "Niratthakaṃ no agamāsi tassa.",
  "anya-e0605n5:26": "28.",
  "anya-e0605n5:27": " Mahāsamudde jalabindutopi,",
  "anya-e0605n5:28": "Tadantre jāti anappakā va;",
  "anya-e0605n5:29": "Nirantaraṃ pūritapāramīnaṃ,",
  "anya-e0605n5:30": "Kathaṃ pamāṇaṃ upamā kuhiṃ vā.",
  "anya-e0605n5:31": "29.",
  "anya-e0605n5:32": " Yo maggapasse madhurambabījaṃ,",
  "anya-e0605n5:33": "Chāyāphalatthāya mahājanānaṃ;",
  "anya-e0605n5:34": "Ropesi tasmiṃ hi khaṇeva tena,",
  "anya-e0605n5:35": "Chāyāphale puññamaladdhamuddhaṃ.",
  "anya-e0605n5:36": "30.",
  "anya-e0605n5:37": " Tatheva saṃsārapathe janānaṃ,",
  "anya-e0605n5:38": "Hitāya attanamabhiropitakkhaṇe;",
  "anya-e0605n5:39": "Siddhaṃ va puññūpari tassa tasmiṃ,",
  "anya-e0605n5:40": "Dhanaṅgajīvaṃ pi haranti ye ye.",
  "anya-e0605n5:41": "31.",
  "anya-e0605n5:42": " So sāgare jaladhikaṃ ruhiraṃ adāsi,",
  "anya-e0605n5:43": "Bhūmāparājiya samaṃsamadāsi dānaṃ;",
  "anya-e0605n5:44": "Meruppamāṇamadhikañca samoḷisīsaṃ,",
  "anya-e0605n5:45": "Khe tārakādhikataraṃ nayanaṃ adāsi."
}