{
  "anya-e0605n9:0": "Nekkhammajjhāsayadīpanīyamakagāthā",
  "anya-e0605n9:1": " Namo tassa yato mahimato yassa tamo na",
  "anya-e0605n9:2": "49.",
  "anya-e0605n9:3": " Disvā nimittāni madacchidāni,",
  "anya-e0605n9:4": "Thīnaṃ virūpāni ratacchidāni;",
  "anya-e0605n9:5": "Pāpāni kammāni sukhacchidāni,",
  "anya-e0605n9:6": "Laddhāni ñāṇāni bhavacchidāni.",
  "anya-e0605n9:7": "50.",
  "anya-e0605n9:8": " Padittagehā viya bheravaṃ ravaṃ,",
  "anya-e0605n9:9": "Ravaṃ sammuṭṭhāya gato mahesi;",
  "anya-e0605n9:10": "Mahesimolokiyaputtamattano,",
  "anya-e0605n9:11": "Tanosi no pemamahoghamattano.",
  "anya-e0605n9:12": "51.",
  "anya-e0605n9:13": " Ummāraummāragatuddharitvā,",
  "anya-e0605n9:14": "Padaṃ padaṃ yātanarāsabhassa;",
  "anya-e0605n9:15": "Alaṃ alaṃkāratarena gantuṃ,",
  "anya-e0605n9:16": "Matī matīvetimanaṅgabhaṅge.",
  "anya-e0605n9:17": "52.",
  "anya-e0605n9:18": " Ummāraummāragato mahesi,",
  "anya-e0605n9:19": "Anaṅgabhaṅgaṃ samacintayittha;",
  "anya-e0605n9:20": "Kiṃ me jarāmaccumukhe ṭhitassa,",
  "anya-e0605n9:21": "Na me vase kāmavase ṭhitassa.",
  "anya-e0605n9:22": "53.",
  "anya-e0605n9:23": " Kāmena kāmena na sādhyamokkhaṃ,",
  "anya-e0605n9:24": "Mānena mānena mamatthi kiñci;",
  "anya-e0605n9:25": "Māro saseno hi avāraṇīyo,",
  "anya-e0605n9:26": "Yantena ucchuṃ viya maddatī maṃ.",
  "anya-e0605n9:27": "54.",
  "anya-e0605n9:28": " Ādittamuyātapayātamūnaṃ,",
  "anya-e0605n9:29": "Atāṇāleṇāsaraṇe jane te;",
  "anya-e0605n9:30": "Disvāna disvāna sivaṃ mayā te,",
  "anya-e0605n9:31": "Kāmena kāmena kathaṃ vineyya.",
  "anya-e0605n9:32": "55.",
  "anya-e0605n9:33": " Vijjāvijjāya cutañcupetaṃ,",
  "anya-e0605n9:34": "Asārasārūpagatañjanaṃ janaṃ;",
  "anya-e0605n9:35": "Vijjāyavijjāya yuto cutohaṃ,",
  "anya-e0605n9:36": "Pahomi tāretumasaṅgaho gato.",
  "anya-e0605n9:37": "56.",
  "anya-e0605n9:38": " Magganti no diṭṭhigatāpavaggaṃ,",
  "anya-e0605n9:39": "Aggā ti tevāhu janā samaggā;",
  "anya-e0605n9:40": "Naggaṃ aho mohatamassa vaggaṃ,",
  "anya-e0605n9:41": "Vaggaṃ hanissāmi tamaggamaggā.",
  "anya-e0605n9:42": "57.",
  "anya-e0605n9:43": " Paseyhakārena aseyhadukkhaṃ,",
  "anya-e0605n9:44": "Janā janentīha janānameva;",
  "anya-e0605n9:45": "Paseyhakārenā aseyhadukkhaṃ,",
  "anya-e0605n9:46": "Pāpaṃ na jānanti tato nidānaṃ.",
  "anya-e0605n9:47": "58.",
  "anya-e0605n9:48": " Te oghayogāsavasaṃkilesā,",
  "anya-e0605n9:49": "Tameva nāsenti tato samuṭṭhitā;",
  "anya-e0605n9:50": "Ekantikaṃ jāti jarā ca maccu,",
  "anya-e0605n9:51": "Nirantaraṃ taṃ byasanañcanekaṃ.",
  "anya-e0605n9:52": "59.",
  "anya-e0605n9:53": " Cīraṃ kilesānasamujjalantaṃ,",
  "anya-e0605n9:54": "Disvāna sattānusayaṃ sayambhū;",
  "anya-e0605n9:55": "Sādhemi bodhiṃ vinayāmi satte,",
  "anya-e0605n9:56": "Pacchāpi passāmi sutaṃ sutantaṃ.",
  "anya-e0605n9:57": "60.",
  "anya-e0605n9:58": " Taṃ dibbacakkaṃ khuracakkamālaṃ,",
  "anya-e0605n9:59": "Rajjaṃ sasārajjasamajjamajjaṃ;",
  "anya-e0605n9:60": "Te bandhavā bandhanamāgatā pare,",
  "anya-e0605n9:61": "Suto pasūtoyamanaṅgadūto.",
  "anya-e0605n9:62": "61.",
  "anya-e0605n9:63": " Samujjalantaṃ vasatī satīsirī,",
  "anya-e0605n9:64": "Sirīsapāgāramidaṃ mahāvisaṃ;",
  "anya-e0605n9:65": "Daddallamānā yuvatī vatīmā,",
  "anya-e0605n9:66": "Sakaṇṭakāyeva samañjasañjase.",
  "anya-e0605n9:67": "62.",
  "anya-e0605n9:68": " Yassā virājitasirī siriyāpi natthi,",
  "anya-e0605n9:69": "Tassāvalokiya na tittivasānamatthi;",
  "anya-e0605n9:70": "Gacchāmi handa tavanaṅga sirappabhedaṃ,",
  "anya-e0605n9:71": "Mattebhakumbhupari sīhavilāsagāmiṃ.",
  "anya-e0605n9:72": "63.",
  "anya-e0605n9:73": " Bho bho anaṅgasucira pi panuṇṇabāṇa,",
  "anya-e0605n9:74": "Bāṇāni saṃhara panuṇṇamito nirodha;",
  "anya-e0605n9:75": "Rodhena cāpadagato manaso na soca,",
  "anya-e0605n9:76": "Socaṃ tavappanavalokiya yāmi santiṃ.",
  "anya-e0605n9:77": "64.",
  "anya-e0605n9:78": " Ratī ratī kāmaguṇe viveke,",
  "anya-e0605n9:79": "Alaṃ alanteva vicintayanto;",
  "anya-e0605n9:80": "Manaṃ manaṅgālayasampadālayaṃ,",
  "anya-e0605n9:81": "Tahiṃ tahiṃ diṭṭhabālā va pakkami."
}