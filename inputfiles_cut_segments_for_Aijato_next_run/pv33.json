{
  "pv33:0.1_0": "Petavatthu",
  "pv33:0.2_0": "Cūḷavagga",
  "pv33:0.3_0": "8. Dutiyamigaluddakapetavatthu",
  "pv33:1.1_0": "“Kūṭāgāre ca pāsāde,",
  "pv33:1.2_0": "pallaṅke gonakatthate;",
  "pv33:1.3_0": "Pañcaṅgikena turiyena,",
  "pv33:1.4_0": "ramasi suppavādite.",
  "pv33:2.1_0": "Tato ratyā vivasāne,",
  "pv33:2.2_0": "sūriyuggamanaṁ pati;",
  "pv33:2.3_0": "Apaviddho susānasmiṁ,",
  "pv33:2.4_0": "bahudukkhaṁ nigacchasi.",
  "pv33:3.1_0": "Kiṁ nu kāyena vācāya,",
  "pv33:3.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv33:3.3_0": "Kissa kammavipākena,",
  "pv33:3.4_0": "idaṁ dukkhaṁ nigacchasi”.",
  "pv33:4.1_0": "“Ahaṁ rājagahe ramme,",
  "pv33:4.2_0": "ramaṇīye giribbaje;",
  "pv33:4.3_0": "Migaluddo pure āsiṁ,",
  "pv33:4.4_0": "luddo cāsimasaññato.",
  "pv33:5.1_0": "Tassa me sahāyo suhadayo,",
  "pv33:5.2_0": "Saddho āsi upāsako;",
  "pv33:5.3_0": "Tassa kulupako bhikkhu,",
  "pv33:5.4_0": "Āsi gotamasāvako;",
  "pv33:5.5_0": "Sopi maṁ anukampanto,",
  "pv33:5.6_0": "Nivāresi punappunaṁ.",
  "pv33:6.1_0": "‘Mākāsi pāpakaṁ kammaṁ,",
  "pv33:6.2_0": "Mā tāta duggatiṁ agā;",
  "pv33:6.3_0": "Sace icchasi pecca sukhaṁ,",
  "pv33:6.4_0": "Virama pāṇavadhā asaṁyamā’.",
  "pv33:7.1_0": "Tassāhaṁ vacanaṁ sutvā,",
  "pv33:7.2_0": "Sukhakāmassa hitānukampino;",
  "pv33:7.3_0": "Nākāsiṁ sakalānusāsaniṁ,",
  "pv33:7.4_0": "Cirapāpābhirato abuddhimā.",
  "pv33:8.1_0": "So maṁ puna bhūrisumedhaso,",
  "pv33:8.2_0": "Anukampāya saṁyame nivesayi;",
  "pv33:8.3_0": "‘Sace divā hanasi pāṇino,",
  "pv33:8.4_0": "Atha te rattiṁ bhavatu saṁyamo’.",
  "pv33:9.1_0": "Svāhaṁ divā hanitvā pāṇino,",
  "pv33:9.2_0": "Virato rattimahosi saññato;",
  "pv33:9.3_0": "Rattāhaṁ paricāremi,",
  "pv33:9.4_0": "Divā khajjāmi duggato.",
  "pv33:10.1_0": "Tassa kammassa kusalassa,",
  "pv33:10.2_0": "Anubhomi rattiṁ amānusiṁ;",
  "pv33:10.3_0": "Divā paṭihatāva kukkurā,",
  "pv33:10.4_0": "Upadhāvanti samantā khādituṁ.",
  "pv33:11.1_0": "Ye ca te satatānuyogino,",
  "pv33:11.2_0": "Dhuvaṁ payuttā sugatassa sāsane;",
  "pv33:11.3_0": "Maññāmi te amatameva kevalaṁ,",
  "pv33:11.4_0": "Adhigacchanti padaṁ asaṅkhatan”ti.",
  "pv33:12.1_0": "Dutiyamigaluddakapetavatthu aṭṭhamaṁ."
}