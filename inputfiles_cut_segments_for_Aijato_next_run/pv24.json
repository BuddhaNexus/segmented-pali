{
  "pv24:0.1_0": "Petavatthu",
  "pv24:0.2_0": "Ubbarivagga",
  "pv24:0.3_0": "12. Kaṇṇamuṇḍapetivatthu",
  "pv24:1.1_0": "“Soṇṇasopānaphalakā,",
  "pv24:1.2_0": "soṇṇavālukasanthatā;",
  "pv24:1.3_0": "Tattha sogandhiyā vaggū,",
  "pv24:1.4_0": "sucigandhā manoramā.",
  "pv24:2.1_0": "Nānārukkhehi sañchannā,",
  "pv24:2.2_0": "nānāgandhasameritā;",
  "pv24:2.3_0": "Nānāpadumasañchannā,",
  "pv24:2.4_0": "puṇḍarīkasamotatā.",
  "pv24:3.1_0": "Surabhiṁ sampavāyanti,",
  "pv24:3.2_0": "manuññā māluteritā;",
  "pv24:3.3_0": "Haṁsakoñcābhirudā ca,",
  "pv24:3.4_0": "cakkavakkābhikūjitā.",
  "pv24:4.1_0": "Nānādijagaṇākiṇṇā,",
  "pv24:4.2_0": "nānāsaragaṇāyutā;",
  "pv24:4.3_0": "Nānāphaladharā rukkhā,",
  "pv24:4.4_0": "nānāpupphadharā vanā.",
  "pv24:5.1_0": "Na manussesu īdisaṁ,",
  "pv24:5.2_0": "nagaraṁ yādisaṁ idaṁ;",
  "pv24:5.3_0": "Pāsādā bahukā tuyhaṁ,",
  "pv24:5.4_0": "sovaṇṇarūpiyāmayā;",
  "pv24:5.5_0": "Daddallamānā ābhenti,",
  "pv24:5.6_0": "samantā caturo disā.",
  "pv24:6.1_0": "Pañca dāsisatā tuyhaṁ,",
  "pv24:6.2_0": "yā temā paricārikā;",
  "pv24:6.3_0": "Tā kambukāyūradharā,",
  "pv24:6.4_0": "kañcanāveḷabhūsitā.",
  "pv24:7.1_0": "Pallaṅkā bahukā tuyhaṁ,",
  "pv24:7.2_0": "sovaṇṇarūpiyāmayā;",
  "pv24:7.3_0": "Kadalimigasañchannā,",
  "pv24:7.4_0": "sajjā gonakasanthatā.",
  "pv24:8.1_0": "Yattha tvaṁ vāsūpagatā,",
  "pv24:8.2_0": "sabbakāmasamiddhinī;",
  "pv24:8.3_0": "Sampattāyaḍḍharattāya,",
  "pv24:8.4_0": "tato uṭṭhāya gacchasi.",
  "pv24:9.1_0": "Uyyānabhūmiṁ gantvāna,",
  "pv24:9.2_0": "pokkharaññā samantato;",
  "pv24:9.3_0": "Tassā tīre tuvaṁ ṭhāsi,",
  "pv24:9.4_0": "harite saddale subhe.",
  "pv24:10.1_0": "Tato te kaṇṇamuṇḍo sunakho,",
  "pv24:10.2_0": "Aṅgamaṅgāni khādati;",
  "pv24:10.3_0": "Yadā ca khāyitā āsi,",
  "pv24:10.4_0": "Aṭṭhisaṅkhalikā katā;",
  "pv24:10.5_0": "Ogāhasi pokkharaṇiṁ,",
  "pv24:10.6_0": "Hoti kāyo yathā pure.",
  "pv24:11.1_0": "Tato tvaṁ aṅgapaccaṅgī,",
  "pv24:11.2_0": "sucāru piyadassanā;",
  "pv24:11.3_0": "Vatthena pārupitvāna,",
  "pv24:11.4_0": "āyāsi mama santikaṁ.",
  "pv24:12.1_0": "Kiṁ nu kāyena vācāya,",
  "pv24:12.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv24:12.3_0": "Kissa kammavipākena,",
  "pv24:12.4_0": "kaṇṇamuṇḍo sunakho tava;",
  "pv24:12.5_0": "Aṅgamaṅgāni khādatī”ti.",
  "pv24:13.1_0": "“Kimilāyaṁ gahapati,",
  "pv24:13.2_0": "saddho āsi upāsako;",
  "pv24:13.3_0": "Tassāhaṁ bhariyā āsiṁ,",
  "pv24:13.4_0": "dussīlā aticārinī.",
  "pv24:14.1_0": "So maṁ aticaramānāya,",
  "pv24:14.2_0": "sāmiko etadabravi;",
  "pv24:14.3_0": "‘Netaṁ channaṁ patirūpaṁ,",
  "pv24:14.4_0": "yaṁ tvaṁ aticarāsi maṁ’.",
  "pv24:15.1_0": "Sāhaṁ ghorañca sapathaṁ,",
  "pv24:15.2_0": "musāvādañca bhāsisaṁ;",
  "pv24:15.3_0": "‘Nāhaṁ taṁ aticarāmi,",
  "pv24:15.4_0": "kāyena uda cetasā.",
  "pv24:16.1_0": "Sacāhaṁ taṁ aticarāmi,",
  "pv24:16.2_0": "kāyena uda cetasā;",
  "pv24:16.3_0": "Kaṇṇamuṇḍoyaṁ sunakho,",
  "pv24:16.4_0": "aṅgamaṅgāni khādatu’.",
  "pv24:17.1_0": "Tassa kammassa vipākaṁ,",
  "pv24:17.2_0": "musāvādassa cūbhayaṁ;",
  "pv24:17.3_0": "Satteva vassasatāni,",
  "pv24:17.4_0": "anubhūtaṁ yato hi me;",
  "pv24:17.5_0": "Kaṇṇamuṇḍo ca sunakho,",
  "pv24:17.6_0": "aṅgamaṅgāni khādati.",
  "pv24:18.1_0": "Tvañca deva bahukāro,",
  "pv24:18.2_0": "atthāya me idhāgato;",
  "pv24:18.3_0": "Sumuttāhaṁ kaṇṇamuṇḍassa,",
  "pv24:18.4_0": "asokā akutobhayā.",
  "pv24:19.1_0": "Tāhaṁ deva namassāmi,",
  "pv24:19.2_0": "yācāmi pañjalīkatā;",
  "pv24:19.3_0": "Bhuñja amānuse kāme,",
  "pv24:19.4_0": "rama deva mayā sahā”ti.",
  "pv24:20.1_0": "“Bhuttā amānusā kāmā,",
  "pv24:20.2_0": "ramitomhi tayā saha;",
  "pv24:20.3_0": "Tāhaṁ subhage yācāmi,",
  "pv24:20.4_0": "khippaṁ paṭinayāhi man”ti.",
  "pv24:21.1_0": "Kaṇṇamuṇḍapetivatthu dvādasamaṁ."
}