{
  "vv22:0.1_0": "Vimānavatthu",
  "vv22:0.2_0": "Itthivimāna",
  "vv22:0.3_0": "Cittalatāvagga",
  "vv22:0.4_0": "5. Bhadditthivimānavatthu",
  "vv22:1.1_0": "“Nīlā pītā ca kāḷā ca,",
  "vv22:1.2_0": "mañjiṭṭhā atha lohitā;",
  "vv22:1.3_0": "Uccāvacānaṁ vaṇṇānaṁ,",
  "vv22:1.4_0": "kiñjakkhaparivāritā.",
  "vv22:2.1_0": "Mandāravānaṁ pupphānaṁ,",
  "vv22:2.2_0": "mālaṁ dhāresi muddhani;",
  "vv22:2.3_0": "Nayime aññesu kāyesu,",
  "vv22:2.4_0": "rukkhā santi sumedhase.",
  "vv22:3.1_0": "Kena kāyaṁ upapannā,",
  "vv22:3.2_0": "tāvatiṁsaṁ yasassinī;",
  "vv22:3.3_0": "Devate pucchitācikkha,",
  "vv22:3.4_0": "kissa kammassidaṁ phalan”ti.",
  "vv22:4.1_0": "“Bhadditthikāti maṁ aññaṁsu,",
  "vv22:4.2_0": "Kimilāyaṁ upāsikā;",
  "vv22:4.3_0": "Saddhā sīlena sampannā,",
  "vv22:4.4_0": "Saṁvibhāgaratā sadā.",
  "vv22:5.1_0": "Acchādanañca bhattañca,",
  "vv22:5.2_0": "senāsanaṁ padīpiyaṁ;",
  "vv22:5.3_0": "Adāsiṁ ujubhūtesu,",
  "vv22:5.4_0": "vippasannena cetasā.",
  "vv22:6.1_0": "Cātuddasiṁ pañcadasiṁ,",
  "vv22:6.2_0": "yā ca pakkhassa aṭṭhamī;",
  "vv22:6.3_0": "Pāṭihāriyapakkhañca,",
  "vv22:6.4_0": "aṭṭhaṅgasusamāgataṁ.",
  "vv22:7.1_0": "Uposathaṁ upavasissaṁ,",
  "vv22:7.2_0": "sadā sīlesu saṁvutā;",
  "vv22:7.3_0": "Saññamā saṁvibhāgā ca,",
  "vv22:7.4_0": "vimānaṁ āvasāmahaṁ.",
  "vv22:8.1_0": "Pāṇātipātā viratā,",
  "vv22:8.2_0": "musāvādā ca saññatā;",
  "vv22:8.3_0": "Theyyā ca aticārā ca,",
  "vv22:8.4_0": "majjapānā ca ārakā.",
  "vv22:9.1_0": "Pañcasikkhāpade ratā,",
  "vv22:9.2_0": "Ariyasaccāna kovidā;",
  "vv22:9.3_0": "Upāsikā cakkhumato,",
  "vv22:9.4_0": "Appamādavihārinī;",
  "vv22:9.5_0": "Katāvāsā katakusalā tato cutā,",
  "vv22:9.6_0": "Sayaṁpabhā anuvicarāmi nandanaṁ.",
  "vv22:10.1_0": "Bhikkhū cāhaṁ paramahitānukampake,",
  "vv22:10.2_0": "Abhojayiṁ tapassiyugaṁ mahāmuniṁ;",
  "vv22:10.3_0": "Katāvāsā katakusalā tato cutā,",
  "vv22:10.4_0": "Sayaṁpabhā anuvicarāmi nandanaṁ.",
  "vv22:11.1_0": "Aṭṭhaṅgikaṁ aparimitaṁ sukhāvahaṁ,",
  "vv22:11.2_0": "Uposathaṁ satatamupāvasiṁ ahaṁ;",
  "vv22:11.3_0": "Katāvāsā katakusalā tato cutā,",
  "vv22:11.4_0": "Sayaṁpabhā anuvicarāmi nandanan”ti.",
  "vv22:12.1_0": "Bhadditthivimānaṁ pañcamaṁ."
}