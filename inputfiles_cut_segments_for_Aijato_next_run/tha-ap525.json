{
  "tha-ap525:0.1_0": "Therāpadāna",
  "tha-ap525:0.2_0": "Tiṇadāyakavagga",
  "tha-ap525:0.3_0": "3. Saraṇagamaniyattheraapadāna",
  "tha-ap525:1.1_0": "“Āruhimha tadā nāvaṁ,",
  "tha-ap525:1.2_0": "bhikkhu cājīviko cahaṁ;",
  "tha-ap525:1.3_0": "Nāvāya bhijjamānāya,",
  "tha-ap525:1.4_0": "bhikkhu me saraṇaṁ adā.",
  "tha-ap525:2.1_0": "Ekatiṁse ito kappe,",
  "tha-ap525:2.2_0": "yaṁ so me saraṇaṁ adā;",
  "tha-ap525:2.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap525:2.4_0": "saraṇagamane phalaṁ.",
  "tha-ap525:3.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap525:3.2_0": "…pe…",
  "tha-ap525:3.3_0": "viharāmi anāsavo.",
  "tha-ap525:4.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap525:4.2_0": "…pe…",
  "tha-ap525:4.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap525:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap525:5.2_0": "…pe…",
  "tha-ap525:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap525:6.1_0": "Itthaṁ sudaṁ āyasmā saraṇagamaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap525:7.1_0": "Saraṇagamaniyattherassāpadānaṁ tatiyaṁ."
}