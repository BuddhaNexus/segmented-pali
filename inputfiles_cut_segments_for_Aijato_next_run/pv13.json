{
  "pv13:0.1_0": "Petavatthu",
  "pv13:0.2_0": "Ubbarivagga",
  "pv13:0.3_0": "1. Saṁsāramocakapetivatthu",
  "pv13:1.1_0": "“Naggā dubbaṇṇarūpāsi,",
  "pv13:1.2_0": "kisā dhamanisanthatā;",
  "pv13:1.3_0": "Upphāsulike kisike,",
  "pv13:1.4_0": "kā nu tvaṁ idha tiṭṭhasī”ti.",
  "pv13:2.1_0": "“Ahaṁ bhadante petīmhi,",
  "pv13:2.2_0": "duggatā yamalokikā;",
  "pv13:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv13:2.4_0": "petalokaṁ ito gatā”ti.",
  "pv13:3.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv13:3.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv13:3.3_0": "Kissa kammavipākena,",
  "pv13:3.4_0": "petalokaṁ ito gatā”ti.",
  "pv13:4.1_0": "“Anukampakā mayhaṁ nāhesuṁ bhante,",
  "pv13:4.2_0": "Pitā ca mātā athavāpi ñātakā;",
  "pv13:4.3_0": "Ye maṁ niyojeyyuṁ dadāhi dānaṁ,",
  "pv13:4.4_0": "Pasannacittā samaṇabrāhmaṇānaṁ.",
  "pv13:5.1_0": "Ito ahaṁ vassasatāni pañca,",
  "pv13:5.2_0": "Yaṁ evarūpā vicarāmi naggā;",
  "pv13:5.3_0": "Khudāya taṇhāya ca khajjamānā,",
  "pv13:5.4_0": "Pāpassa kammassa phalaṁ mamedaṁ.",
  "pv13:6.1_0": "Vandāmi taṁ ayya pasannacittā,",
  "pv13:6.2_0": "Anukampa maṁ vīra mahānubhāva;",
  "pv13:6.3_0": "Datvā ca me ādisa yaṁ hi kiñci,",
  "pv13:6.4_0": "Mocehi maṁ duggatiyā bhadante”ti.",
  "pv13:7.1_0": "Sādhūti so paṭissutvā,",
  "pv13:7.2_0": "sāriputtonukampako;",
  "pv13:7.3_0": "Bhikkhūnaṁ ālopaṁ datvā,",
  "pv13:7.4_0": "pāṇimattañca coḷakaṁ;",
  "pv13:7.5_0": "Thālakassa ca pānīyaṁ,",
  "pv13:7.6_0": "tassā dakkhiṇamādisi.",
  "pv13:8.1_0": "Samanantarānuddiṭṭhe,",
  "pv13:8.2_0": "vipāko udapajjatha;",
  "pv13:8.3_0": "Bhojanacchādanapānīyaṁ,",
  "pv13:8.4_0": "dakkhiṇāya idaṁ phalaṁ.",
  "pv13:9.1_0": "Tato suddhā sucivasanā,",
  "pv13:9.2_0": "kāsikuttamadhārinī;",
  "pv13:9.3_0": "Vicittavatthābharaṇā,",
  "pv13:9.4_0": "sāriputtaṁ upasaṅkami.",
  "pv13:10.1_0": "“Abhikkantena vaṇṇena,",
  "pv13:10.2_0": "yā tvaṁ tiṭṭhasi devate;",
  "pv13:10.3_0": "Obhāsentī disā sabbā,",
  "pv13:10.4_0": "osadhī viya tārakā.",
  "pv13:11.1_0": "Kena te tādiso vaṇṇo,",
  "pv13:11.2_0": "kena te idha mijjhati;",
  "pv13:11.3_0": "Uppajjanti ca te bhogā,",
  "pv13:11.4_0": "ye keci manaso piyā.",
  "pv13:12.1_0": "Pucchāmi taṁ devi mahānubhāve,",
  "pv13:12.2_0": "Manussabhūtā kimakāsi puññaṁ;",
  "pv13:12.3_0": "Kenāsi evaṁ jalitānubhāvā,",
  "pv13:12.4_0": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "pv13:13.1_0": "“Uppaṇḍukiṁ kisaṁ chātaṁ,",
  "pv13:13.2_0": "naggaṁ sampatitacchaviṁ;",
  "pv13:13.3_0": "Muni kāruṇiko loke,",
  "pv13:13.4_0": "taṁ maṁ addakkhi duggataṁ.",
  "pv13:14.1_0": "Bhikkhūnaṁ ālopaṁ datvā,",
  "pv13:14.2_0": "pāṇimattañca coḷakaṁ;",
  "pv13:14.3_0": "Thālakassa ca pānīyaṁ,",
  "pv13:14.4_0": "mama dakkhiṇamādisi.",
  "pv13:15.1_0": "Ālopassa phalaṁ passa,",
  "pv13:15.2_0": "bhattaṁ vassasataṁ dasa;",
  "pv13:15.3_0": "Bhuñjāmi kāmakāminī,",
  "pv13:15.4_0": "anekarasabyañjanaṁ.",
  "pv13:16.1_0": "Pāṇimattassa coḷassa,",
  "pv13:16.2_0": "vipākaṁ passa yādisaṁ;",
  "pv13:16.3_0": "Yāvatā nandarājassa,",
  "pv13:16.4_0": "vijitasmiṁ paṭicchadā.",
  "pv13:17.1_0": "Tato bahutarā bhante,",
  "pv13:17.2_0": "vatthānacchādanāni me;",
  "pv13:17.3_0": "Koseyyakambalīyāni,",
  "pv13:17.4_0": "khomakappāsikāni ca.",
  "pv13:18.1_0": "Vipulā ca mahagghā ca,",
  "pv13:18.2_0": "tepākāsevalambare;",
  "pv13:18.3_0": "Sāhaṁ taṁ paridahāmi,",
  "pv13:18.4_0": "yaṁ yaṁ hi manaso piyaṁ.",
  "pv13:19.1_0": "Thālakassa ca pānīyaṁ,",
  "pv13:19.2_0": "vipākaṁ passa yādisaṁ;",
  "pv13:19.3_0": "Gambhīrā caturassā ca,",
  "pv13:19.4_0": "pokkharañño sunimmitā.",
  "pv13:20.1_0": "Setodakā suppatitthā,",
  "pv13:20.2_0": "sītā appaṭigandhiyā;",
  "pv13:20.3_0": "Padumuppalasañchannā,",
  "pv13:20.4_0": "vārikiñjakkhapūritā.",
  "pv13:21.1_0": "Sāhaṁ ramāmi kīḷāmi,",
  "pv13:21.2_0": "modāmi akutobhayā;",
  "pv13:21.3_0": "Muniṁ kāruṇikaṁ loke,",
  "pv13:21.4_0": "bhante vanditumāgatā”ti.",
  "pv13:22.1_0": "Saṁsāramocakapetivatthu paṭhamaṁ."
}