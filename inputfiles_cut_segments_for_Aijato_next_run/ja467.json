{
  "ja467:0.1_0": "Jātaka",
  "ja467:0.2_0": "Dvādasakanipāta",
  "ja467:0.3_0": "Cūḷakuṇālavagga",
  "ja467:0.4_0": "4. Kāmajātaka",
  "ja467:1.1_0": "“Kāmaṁ kāmayamānassa,",
  "ja467:1.2_0": "tassa ce taṁ samijjhati;",
  "ja467:1.3_0": "Addhā pītimano hoti,",
  "ja467:1.4_0": "laddhā macco yadicchati.",
  "ja467:2.1_0": "Kāmaṁ kāmayamānassa,",
  "ja467:2.2_0": "tassa ce taṁ samijjhati;",
  "ja467:2.3_0": "Tato naṁ aparaṁ kāme,",
  "ja467:2.4_0": "ghamme taṇhaṁva vindati.",
  "ja467:3.1_0": "Gavaṁva siṅgino siṅgaṁ,",
  "ja467:3.2_0": "vaḍḍhamānassa vaḍḍhati;",
  "ja467:3.3_0": "Evaṁ mandassa posassa,",
  "ja467:3.4_0": "bālassa avijānato;",
  "ja467:3.5_0": "Bhiyyo taṇhā pipāsā ca,",
  "ja467:3.6_0": "vaḍḍhamānassa vaḍḍhati.",
  "ja467:4.1_0": "Pathabyā sāliyavakaṁ,",
  "ja467:4.2_0": "gavāssaṁ dāsaporisaṁ;",
  "ja467:4.3_0": "Datvā ca nālamekassa,",
  "ja467:4.4_0": "iti vidvā samaṁ care.",
  "ja467:5.1_0": "Rājā pasayha pathaviṁ vijitvā,",
  "ja467:5.2_0": "Sasāgarantaṁ mahimāvasanto;",
  "ja467:5.3_0": "Oraṁ samuddassa atittarūpo,",
  "ja467:5.4_0": "Pāraṁ samuddassapi patthayetha.",
  "ja467:6.1_0": "Yāva anussaraṁ kāme,",
  "ja467:6.2_0": "Manasā titti nājjhagā;",
  "ja467:6.3_0": "Tato nivattā paṭikkamma disvā,",
  "ja467:6.4_0": "Te ve sutittā ye paññāya tittā.",
  "ja467:7.1_0": "Paññāya tittinaṁ seṭṭhaṁ,",
  "ja467:7.2_0": "na so kāmehi tappati;",
  "ja467:7.3_0": "Paññāya tittaṁ purisaṁ,",
  "ja467:7.4_0": "taṇhā na kurute vasaṁ.",
  "ja467:8.1_0": "Apacinetheva kāmānaṁ,",
  "ja467:8.2_0": "appicchassa alolupo;",
  "ja467:8.3_0": "Samuddamatto puriso,",
  "ja467:8.4_0": "na so kāmehi tappati.",
  "ja467:9.1_0": "Rathakārova cammassa,",
  "ja467:9.2_0": "parikantaṁ upāhanaṁ;",
  "ja467:9.3_0": "Yaṁ yaṁ cajati kāmānaṁ,",
  "ja467:9.4_0": "taṁ taṁ sampajjate sukhaṁ;",
  "ja467:9.5_0": "Sabbañce sukhamiccheyya,",
  "ja467:9.6_0": "sabbe kāme pariccaje”.",
  "ja467:10.1_0": "“Aṭṭha te bhāsitā gāthā,",
  "ja467:10.2_0": "sabbā honti sahassiyo;",
  "ja467:10.3_0": "Paṭigaṇha mahābrahme,",
  "ja467:10.4_0": "sādhetaṁ tava bhāsitaṁ”.",
  "ja467:11.1_0": "“Na me attho sahassehi,",
  "ja467:11.2_0": "satehi nahutehi vā;",
  "ja467:11.3_0": "Pacchimaṁ bhāsato gāthaṁ,",
  "ja467:11.4_0": "kāme me na rato mano”.",
  "ja467:12.1_0": "“Bhadrako vatāyaṁ māṇavako,",
  "ja467:12.2_0": "Sabbalokavidū muni;",
  "ja467:12.3_0": "Yo imaṁ taṇhaṁ dukkhajananiṁ,",
  "ja467:12.4_0": "Parijānāti paṇḍito”ti.",
  "ja467:13.1_0": "Kāmajātakaṁ catutthaṁ."
}