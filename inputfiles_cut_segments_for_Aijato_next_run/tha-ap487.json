{
  "tha-ap487:0.1_0": "Therāpadāna",
  "tha-ap487:0.2_0": "Paṁsukūlavagga",
  "tha-ap487:0.3_0": "5. Candanamāliyattheraapadāna",
  "tha-ap487:1.1_0": "“Pañca kāmaguṇe hitvā,",
  "tha-ap487:1.2_0": "piyarūpe manorame;",
  "tha-ap487:1.3_0": "Asītikoṭiyo hitvā,",
  "tha-ap487:1.4_0": "pabbajiṁ anagāriyaṁ.",
  "tha-ap487:2.1_0": "Pabbajitvāna kāyena,",
  "tha-ap487:2.2_0": "pāpakammaṁ vivajjayiṁ;",
  "tha-ap487:2.3_0": "Vacīduccaritaṁ hitvā,",
  "tha-ap487:2.4_0": "nadīkūle vasāmahaṁ.",
  "tha-ap487:3.1_0": "Ekakaṁ maṁ viharantaṁ,",
  "tha-ap487:3.2_0": "buddhaseṭṭho upāgami;",
  "tha-ap487:3.3_0": "Nāhaṁ jānāmi buddhoti,",
  "tha-ap487:3.4_0": "akāsiṁ paṭisanthāraṁ.",
  "tha-ap487:4.1_0": "Karitvā paṭisanthāraṁ,",
  "tha-ap487:4.2_0": "nāmagottamapucchahaṁ;",
  "tha-ap487:4.3_0": "‘Devatānusi gandhabbo,",
  "tha-ap487:4.4_0": "adu sakko purindado.",
  "tha-ap487:5.1_0": "Ko vā tvaṁ kassa vā putto,",
  "tha-ap487:5.2_0": "mahābrahmā idhāgato;",
  "tha-ap487:5.3_0": "Virocesi disā sabbā,",
  "tha-ap487:5.4_0": "udayaṁ sūriyo yathā.",
  "tha-ap487:6.1_0": "Sahassārāni cakkāni,",
  "tha-ap487:6.2_0": "pāde dissanti mārisa;",
  "tha-ap487:6.3_0": "Ko vā tvaṁ kassa vā putto,",
  "tha-ap487:6.4_0": "kathaṁ jānemu taṁ mayaṁ;",
  "tha-ap487:6.5_0": "Nāmagottaṁ pavedehi,",
  "tha-ap487:6.6_0": "saṁsayaṁ apanehi me.",
  "tha-ap487:7.1_0": "Namhi devo na gandhabbo,",
  "tha-ap487:7.2_0": "namhi sakko purindado;",
  "tha-ap487:7.3_0": "Brahmabhāvo ca me natthi,",
  "tha-ap487:7.4_0": "etesaṁ uttamo ahaṁ.",
  "tha-ap487:8.1_0": "Atīto visayaṁ tesaṁ,",
  "tha-ap487:8.2_0": "dālayiṁ kāmabandhanaṁ;",
  "tha-ap487:8.3_0": "Sabbe kilese jhāpetvā,",
  "tha-ap487:8.4_0": "patto sambodhimuttamaṁ’.",
  "tha-ap487:9.1_0": "Tassa vācaṁ suṇitvāhaṁ,",
  "tha-ap487:9.2_0": "idaṁ vacanamabraviṁ;",
  "tha-ap487:9.3_0": "‘Yadi buddhoti sabbaññū,",
  "tha-ap487:9.4_0": "nisīda tvaṁ mahāmune.",
  "tha-ap487:10.1_0": "Tamahaṁ pūjayissāmi,",
  "tha-ap487:10.2_0": "dukkhassantakaro tuvaṁ’;",
  "tha-ap487:10.3_0": "Pattharitvā jinacammaṁ,",
  "tha-ap487:10.4_0": "adāsi satthuno ahaṁ.",
  "tha-ap487:11.1_0": "Nisīdi tattha bhagavā,",
  "tha-ap487:11.2_0": "sīhova girigabbhare;",
  "tha-ap487:11.3_0": "Khippaṁ pabbatamāruyha,",
  "tha-ap487:11.4_0": "ambassa phalamaggahiṁ.",
  "tha-ap487:12.1_0": "Sālakalyāṇikaṁ pupphaṁ,",
  "tha-ap487:12.2_0": "Candanañca mahārahaṁ;",
  "tha-ap487:12.3_0": "Khippaṁ paggayha taṁ sabbaṁ,",
  "tha-ap487:12.4_0": "Upetvā lokanāyakaṁ.",
  "tha-ap487:13.1_0": "Phalaṁ buddhassa datvāna,",
  "tha-ap487:13.2_0": "sālapupphamapūjayiṁ;",
  "tha-ap487:13.3_0": "Candanaṁ anulimpitvā,",
  "tha-ap487:13.4_0": "avandiṁ satthuno ahaṁ.",
  "tha-ap487:14.1_0": "Pasannacitto sumano,",
  "tha-ap487:14.2_0": "vipulāya ca pītiyā;",
  "tha-ap487:14.3_0": "Ajinamhi nisīditvā,",
  "tha-ap487:14.4_0": "sumedho lokanāyako.",
  "tha-ap487:15.1_0": "Mama kammaṁ pakittesi,",
  "tha-ap487:15.2_0": "hāsayanto mamaṁ tadā;",
  "tha-ap487:15.3_0": "‘Iminā phaladānena,",
  "tha-ap487:15.4_0": "gandhamālehi cūbhayaṁ.",
  "tha-ap487:16.1_0": "Pañcavīse kappasate,",
  "tha-ap487:16.2_0": "devaloke ramissati;",
  "tha-ap487:16.3_0": "Anūnamanasaṅkappo,",
  "tha-ap487:16.4_0": "vasavattī bhavissati.",
  "tha-ap487:17.1_0": "Chabbīsatikappasate,",
  "tha-ap487:17.2_0": "manussattaṁ gamissati;",
  "tha-ap487:17.3_0": "Bhavissati cakkavattī,",
  "tha-ap487:17.4_0": "cāturanto mahiddhiko.",
  "tha-ap487:18.1_0": "Vebhāraṁ nāma nagaraṁ,",
  "tha-ap487:18.2_0": "vissakammena māpitaṁ;",
  "tha-ap487:18.3_0": "Hessati sabbasovaṇṇaṁ,",
  "tha-ap487:18.4_0": "nānāratanabhūsitaṁ.",
  "tha-ap487:19.1_0": "Eteneva upāyena,",
  "tha-ap487:19.2_0": "saṁsarissati so bhave;",
  "tha-ap487:19.3_0": "Sabbattha pūjito hutvā,",
  "tha-ap487:19.4_0": "devatte atha mānuse.",
  "tha-ap487:20.1_0": "Pacchime bhave sampatte,",
  "tha-ap487:20.2_0": "brahmabandhu bhavissati;",
  "tha-ap487:20.3_0": "Agārā abhinikkhamma,",
  "tha-ap487:20.4_0": "anagārī bhavissati;",
  "tha-ap487:20.5_0": "Abhiññāpāragū hutvā,",
  "tha-ap487:20.6_0": "nibbāyissatināsavo’.",
  "tha-ap487:21.1_0": "Idaṁ vatvāna sambuddho,",
  "tha-ap487:21.2_0": "sumedho lokanāyako;",
  "tha-ap487:21.3_0": "Mama nijjhāyamānassa,",
  "tha-ap487:21.4_0": "pakkāmi anilañjase.",
  "tha-ap487:22.1_0": "Tena kammena sukatena,",
  "tha-ap487:22.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap487:22.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap487:22.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap487:23.1_0": "Tusitato cavitvāna,",
  "tha-ap487:23.2_0": "nibbattiṁ mātukucchiyaṁ;",
  "tha-ap487:23.3_0": "Bhoge me ūnatā natthi,",
  "tha-ap487:23.4_0": "yamhi gabbhe vasāmahaṁ.",
  "tha-ap487:24.1_0": "Mātukucchigate mayi,",
  "tha-ap487:24.2_0": "annapānañca bhojanaṁ;",
  "tha-ap487:24.3_0": "Mātuyā mama chandena,",
  "tha-ap487:24.4_0": "nibbattati yadicchakaṁ.",
  "tha-ap487:25.1_0": "Jātiyā pañcavassena,",
  "tha-ap487:25.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap487:25.3_0": "Oropitamhi kesamhi,",
  "tha-ap487:25.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap487:26.1_0": "Pubbakammaṁ gavesanto,",
  "tha-ap487:26.2_0": "orena nāddasaṁ ahaṁ;",
  "tha-ap487:26.3_0": "Tiṁsakappasahassamhi,",
  "tha-ap487:26.4_0": "mama kammamanussariṁ.",
  "tha-ap487:27.1_0": "Namo te purisājañña,",
  "tha-ap487:27.2_0": "namo te purisuttama;",
  "tha-ap487:27.3_0": "Tava sāsanamāgamma,",
  "tha-ap487:27.4_0": "pattomhi acalaṁ padaṁ.",
  "tha-ap487:28.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap487:28.2_0": "yaṁ buddhamabhipūjayiṁ;",
  "tha-ap487:28.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap487:28.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap487:29.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap487:29.2_0": "…pe…",
  "tha-ap487:29.3_0": "viharāmi anāsavo.",
  "tha-ap487:30.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap487:30.2_0": "…pe…",
  "tha-ap487:30.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap487:31.1_0": "Paṭisambhidā catasso,",
  "tha-ap487:31.2_0": "…pe…",
  "tha-ap487:31.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap487:32.1_0": "Itthaṁ sudaṁ āyasmā candanamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap487:33.1_0": "Candanamāliyattherassāpadānaṁ pañcamaṁ."
}