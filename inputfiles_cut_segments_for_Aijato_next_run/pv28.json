{
  "pv28:0.1_0": "Petavatthu",
  "pv28:0.2_0": "Cūḷavagga",
  "pv28:0.3_0": "3. Rathakārapetivatthu",
  "pv28:1.1_0": "“Veḷuriyathambhaṁ ruciraṁ pabhassaraṁ,",
  "pv28:1.2_0": "Vimānamāruyha anekacittaṁ;",
  "pv28:1.3_0": "Tatthacchasi devi mahānubhāve,",
  "pv28:1.4_0": "Pathaddhani pannaraseva cando.",
  "pv28:2.1_0": "Vaṇṇo ca te kanakassa sannibho,",
  "pv28:2.2_0": "Uttattarūpo bhusa dassaneyyo;",
  "pv28:2.3_0": "Pallaṅkaseṭṭhe atule nisinnā,",
  "pv28:2.4_0": "Ekā tuvaṁ natthi ca tuyha sāmiko.",
  "pv28:3.1_0": "Imā ca te pokkharaṇī samantā,",
  "pv28:3.2_0": "Pahūtamalyā bahupuṇḍarīkā;",
  "pv28:3.3_0": "Suvaṇṇacuṇṇehi samantamotthatā,",
  "pv28:3.4_0": "Na tattha paṅko paṇako ca vijjati.",
  "pv28:4.1_0": "Haṁsā cime dassanīyā manoramā,",
  "pv28:4.2_0": "Udakasmimanupariyanti sabbadā;",
  "pv28:4.3_0": "Samayya vaggūpanadanti sabbe,",
  "pv28:4.4_0": "Bindussarā dundubhīnaṁva ghoso.",
  "pv28:5.1_0": "Daddallamānā yasasā yasassinī,",
  "pv28:5.2_0": "Nāvāya ca tvaṁ avalamba tiṭṭhasi;",
  "pv28:5.3_0": "Āḷārapamhe hasite piyaṁvade,",
  "pv28:5.4_0": "Sabbaṅgakalyāṇi bhusaṁ virocasi.",
  "pv28:6.1_0": "Idaṁ vimānaṁ virajaṁ same ṭhitaṁ,",
  "pv28:6.2_0": "Uyyānavantaṁ ratinandivaḍḍhanaṁ;",
  "pv28:6.3_0": "Icchāmahaṁ nāri anomadassane,",
  "pv28:6.4_0": "Tayā saha nandane idha moditun”ti.",
  "pv28:7.1_0": "“Karohi kammaṁ idha vedanīyaṁ,",
  "pv28:7.2_0": "Cittañca te idha nihitaṁ bhavatu;",
  "pv28:7.3_0": "Katvāna kammaṁ idha vedanīyaṁ,",
  "pv28:7.4_0": "Evaṁ mamaṁ lacchasi kāmakāminin”ti.",
  "pv28:8.1_0": "“Sādhū”ti so tassā paṭissuṇitvā,",
  "pv28:8.2_0": "Akāsi kammaṁ tahiṁ vedanīyaṁ;",
  "pv28:8.3_0": "Katvāna kammaṁ tahiṁ vedanīyaṁ,",
  "pv28:8.4_0": "Upapajji so māṇavo tassā sahabyatanti.",
  "pv28:9.1_0": "Rathakārapetivatthu tatiyaṁ.",
  "pv28:9.2_0": "Bhāṇavāraṁ dutiyaṁ."
}