{
  "tha-ap473:0.1_0": "Therāpadāna",
  "tha-ap473:0.2_0": "Naḷamālivagga",
  "tha-ap473:0.3_0": "1. Naḷamāliyattheraapadāna",
  "tha-ap473:1.1_0": "“Suvaṇṇavaṇṇaṁ sambuddhaṁ,",
  "tha-ap473:1.2_0": "Āhutīnaṁ paṭiggahaṁ;",
  "tha-ap473:1.3_0": "Vipinaggena gacchantaṁ,",
  "tha-ap473:1.4_0": "Addasaṁ lokanāyakaṁ.",
  "tha-ap473:2.1_0": "Naḷamālaṁ gahetvāna,",
  "tha-ap473:2.2_0": "nikkhamanto ca tāvade;",
  "tha-ap473:2.3_0": "Tatthaddasāsiṁ sambuddhaṁ,",
  "tha-ap473:2.4_0": "oghatiṇṇamanāsavaṁ.",
  "tha-ap473:3.1_0": "Pasannacitto sumano,",
  "tha-ap473:3.2_0": "naḷamālamapūjayiṁ;",
  "tha-ap473:3.3_0": "Dakkhiṇeyyaṁ mahāvīraṁ,",
  "tha-ap473:3.4_0": "sabbalokānukampakaṁ.",
  "tha-ap473:4.1_0": "Ekatiṁse ito kappe,",
  "tha-ap473:4.2_0": "yaṁ mālamabhiropayiṁ;",
  "tha-ap473:4.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap473:4.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap473:5.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap473:5.2_0": "bhavā sabbe samūhatā;",
  "tha-ap473:5.3_0": "Nāgova bandhanaṁ chetvā,",
  "tha-ap473:5.4_0": "viharāmi anāsavo.",
  "tha-ap473:6.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap473:6.2_0": "mama buddhassa santike;",
  "tha-ap473:6.3_0": "Tisso vijjā anuppattā,",
  "tha-ap473:6.4_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap473:7.1_0": "Paṭisambhidā catasso,",
  "tha-ap473:7.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap473:7.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap473:7.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap473:8.1_0": "Itthaṁ sudaṁ āyasmā naḷamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap473:9.1_0": "Naḷamāliyattherassāpadānaṁ paṭhamaṁ."
}