{
  "cp18:0.1_0": "Cariyāpiṭaka",
  "cp18:0.2_0": "Hatthināgavagga",
  "cp18:0.3_0": "Sīlapāramī 8",
  "cp18:0.4_0": "Dhammadevaputtacariya",
  "cp18:1.1_0": "“Punāparaṁ yadā homi,",
  "cp18:1.2_0": "mahāpakkho mahiddhiko;",
  "cp18:1.3_0": "Dhammo nāma mahāyakkho,",
  "cp18:1.4_0": "sabbalokānukampako.",
  "cp18:2.1_0": "Dasakusalakammapathe,",
  "cp18:2.2_0": "samādapento mahājanaṁ;",
  "cp18:2.3_0": "Carāmi gāmanigamaṁ,",
  "cp18:2.4_0": "samitto saparijjano.",
  "cp18:3.1_0": "Pāpo kadariyo yakkho,",
  "cp18:3.2_0": "dīpento dasa pāpake;",
  "cp18:3.3_0": "Sopettha mahiyā carati,",
  "cp18:3.4_0": "samitto saparijjano.",
  "cp18:4.1_0": "Dhammavādī adhammo ca,",
  "cp18:4.2_0": "ubho paccanikā mayaṁ;",
  "cp18:4.3_0": "Dhure dhuraṁ ghaṭṭayantā,",
  "cp18:4.4_0": "samimhā paṭipathe ubho.",
  "cp18:5.1_0": "Kalaho vattatī bhesmā,",
  "cp18:5.2_0": "kalyāṇapāpakassa ca;",
  "cp18:5.3_0": "Maggā okkamanatthāya,",
  "cp18:5.4_0": "mahāyuddho upaṭṭhito.",
  "cp18:6.1_0": "Yadihaṁ tassa kuppeyyaṁ,",
  "cp18:6.2_0": "yadi bhinde tapoguṇaṁ;",
  "cp18:6.3_0": "Sahaparijanaṁ tassa,",
  "cp18:6.4_0": "rajabhūtaṁ kareyyahaṁ.",
  "cp18:7.1_0": "Api cāhaṁ sīlarakkhāya,",
  "cp18:7.2_0": "nibbāpetvāna mānasaṁ;",
  "cp18:7.3_0": "Saha janenokkamitvā,",
  "cp18:7.4_0": "pathaṁ pāpassa dāsahaṁ.",
  "cp18:8.1_0": "Saha pathato okkante,",
  "cp18:8.2_0": "katvā cittassa nibbutiṁ;",
  "cp18:8.3_0": "Vivaraṁ adāsi pathavī,",
  "cp18:8.4_0": "pāpayakkhassa tāvade”ti.",
  "cp18:9.1_0": "Dhammadevaputtacariyaṁ aṭṭhamaṁ."
}