{
  "tha-ap10:0.1_0": "Therāpadāna",
  "tha-ap10:0.2_0": "Buddhavagga",
  "tha-ap10:0.3_0": "10. Piṇḍolabhāradvājattheraapadāna",
  "tha-ap10:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap10:1.2_0": "sayambhū aggapuggalo;",
  "tha-ap10:1.3_0": "Purato himavantassa,",
  "tha-ap10:1.4_0": "cittakūṭe vasī tadā.",
  "tha-ap10:2.1_0": "Abhītarūpo tatthāsiṁ,",
  "tha-ap10:2.2_0": "migarājā catukkamo;",
  "tha-ap10:2.3_0": "Tassa saddaṁ suṇitvāna,",
  "tha-ap10:2.4_0": "vikkhambhanti bahujjanā.",
  "tha-ap10:3.1_0": "Suphullaṁ padumaṁ gayha,",
  "tha-ap10:3.2_0": "upagacchiṁ narāsabhaṁ;",
  "tha-ap10:3.3_0": "Vuṭṭhitassa samādhimhā,",
  "tha-ap10:3.4_0": "buddhassa abhiropayiṁ.",
  "tha-ap10:4.1_0": "Catuddisaṁ namassitvā,",
  "tha-ap10:4.2_0": "buddhaseṭṭhaṁ naruttamaṁ;",
  "tha-ap10:4.3_0": "Sakaṁ cittaṁ pasādetvā,",
  "tha-ap10:4.4_0": "sīhanādaṁ nadiṁ ahaṁ.",
  "tha-ap10:5.1_0": "Padumuttaro lokavidū,",
  "tha-ap10:5.2_0": "āhutīnaṁ paṭiggaho;",
  "tha-ap10:5.3_0": "Sakāsane nisīditvā,",
  "tha-ap10:5.4_0": "imā gāthā abhāsatha.",
  "tha-ap10:6.1_0": "Buddhassa giramaññāya,",
  "tha-ap10:6.2_0": "Sabbe devā samāgatā;",
  "tha-ap10:6.3_0": "‘Āgato vadataṁ seṭṭho,",
  "tha-ap10:6.4_0": "Dhammaṁ sossāma taṁ mayaṁ’.",
  "tha-ap10:7.1_0": "Tesaṁ hāsaparetānaṁ,",
  "tha-ap10:7.2_0": "purato lokanāyako;",
  "tha-ap10:7.3_0": "Mama saddaṁ pakittesi,",
  "tha-ap10:7.4_0": "dīghadassī mahāmuni.",
  "tha-ap10:8.1_0": "Yenidaṁ padumaṁ dinnaṁ,",
  "tha-ap10:8.2_0": "sīhanādo ca nādito;",
  "tha-ap10:8.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap10:8.4_0": "suṇātha mama bhāsato.",
  "tha-ap10:9.1_0": "Ito aṭṭhamake kappe,",
  "tha-ap10:9.2_0": "cakkavattī bhavissati;",
  "tha-ap10:9.3_0": "Sattaratanasampanno,",
  "tha-ap10:9.4_0": "catudīpamhi issaro.",
  "tha-ap10:10.1_0": "Kārayissati issariyaṁ,",
  "tha-ap10:10.2_0": "mahiyā catusaṭṭhiyā;",
  "tha-ap10:10.3_0": "Padumo nāma nāmena,",
  "tha-ap10:10.4_0": "cakkavattī mahabbalo.",
  "tha-ap10:11.1_0": "Kappasatasahassamhi,",
  "tha-ap10:11.2_0": "okkākakulasambhavo;",
  "tha-ap10:11.3_0": "Gotamo nāma gottena,",
  "tha-ap10:11.4_0": "satthā loke bhavissati.",
  "tha-ap10:12.1_0": "Pakāsite pāvacane,",
  "tha-ap10:12.2_0": "brahmabandhu bhavissati;",
  "tha-ap10:12.3_0": "Brahmaññā abhinikkhamma,",
  "tha-ap10:12.4_0": "pabbajissati tāvade.",
  "tha-ap10:13.1_0": "Padhānapahitatto so,",
  "tha-ap10:13.2_0": "upasanto nirūpadhi;",
  "tha-ap10:13.3_0": "Sabbāsave pariññāya,",
  "tha-ap10:13.4_0": "nibbāyissatināsavo.",
  "tha-ap10:14.1_0": "Vijane pantaseyyamhi,",
  "tha-ap10:14.2_0": "vāḷamigasamākule;",
  "tha-ap10:14.3_0": "Sabbāsave pariññāya,",
  "tha-ap10:14.4_0": "nibbāyissatināsavo.",
  "tha-ap10:15.1_0": "Paṭisambhidā catasso,",
  "tha-ap10:15.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap10:15.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap10:15.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap10:16.1_0": "Itthaṁ sudaṁ āyasmā piṇḍolabhāradvājo thero imā gāthāyo abhāsitthāti.",
  "tha-ap10:17.1_0": "Piṇḍolabhāradvājattherassāpadānaṁ aṭṭhamaṁ."
}