{
  "pv35:0.1_0": "Petavatthu",
  "pv35:0.2_0": "Cūḷavagga",
  "pv35:0.3_0": "10. Dhātuvivaṇṇapetavatthu",
  "pv35:1.1_0": "“Antalikkhasmiṁ tiṭṭhanto,",
  "pv35:1.2_0": "Duggandho pūti vāyasi;",
  "pv35:1.3_0": "Mukhañca te kimayo pūtigandhaṁ,",
  "pv35:1.4_0": "Khādanti kiṁ kammamakāsi pubbe.",
  "pv35:2.1_0": "Tato satthaṁ gahetvāna,",
  "pv35:2.2_0": "okkantanti punappunaṁ;",
  "pv35:2.3_0": "Khārena paripphositvā,",
  "pv35:2.4_0": "okkantanti punappunaṁ.",
  "pv35:3.1_0": "Kiṁ nu kāyena vācāya,",
  "pv35:3.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv35:3.3_0": "Kissa kammavipākena,",
  "pv35:3.4_0": "idaṁ dukkhaṁ nigacchasī”ti.",
  "pv35:4.1_0": "“Ahaṁ rājagahe ramme,",
  "pv35:4.2_0": "ramaṇīye giribbaje;",
  "pv35:4.3_0": "Issaro dhanadhaññassa,",
  "pv35:4.4_0": "supahūtassa mārisa.",
  "pv35:5.1_0": "Tassāyaṁ me bhariyā ca,",
  "pv35:5.2_0": "dhītā ca suṇisā ca me;",
  "pv35:5.3_0": "Tā mālaṁ uppalañcāpi,",
  "pv35:5.4_0": "paccagghañca vilepanaṁ;",
  "pv35:5.5_0": "Thūpaṁ harantiyo vāresiṁ,",
  "pv35:5.6_0": "taṁ pāpaṁ pakataṁ mayā.",
  "pv35:6.1_0": "Chaḷāsītisahassāni,",
  "pv35:6.2_0": "mayaṁ paccattavedanā;",
  "pv35:6.3_0": "Thūpapūjaṁ vivaṇṇetvā,",
  "pv35:6.4_0": "paccāma niraye bhusaṁ.",
  "pv35:7.1_0": "Ye ca kho thūpapūjāya,",
  "pv35:7.2_0": "vattante arahato mahe;",
  "pv35:7.3_0": "Ādīnavaṁ pakāsenti,",
  "pv35:7.4_0": "vivecayetha ne tato.",
  "pv35:8.1_0": "Imā ca passa āyantiyo,",
  "pv35:8.2_0": "Māladhārī alaṅkatā;",
  "pv35:8.3_0": "Mālāvipākaṁnubhontiyo,",
  "pv35:8.4_0": "Samiddhā ca tā yasassiniyo.",
  "pv35:9.1_0": "Tañca disvāna accheraṁ,",
  "pv35:9.2_0": "abbhutaṁ lomahaṁsanaṁ;",
  "pv35:9.3_0": "Namo karonti sappaññā,",
  "pv35:9.4_0": "vandanti taṁ mahāmuniṁ.",
  "pv35:10.1_0": "Sohaṁ nūna ito gantvā,",
  "pv35:10.2_0": "yoniṁ laddhāna mānusiṁ;",
  "pv35:10.3_0": "Thūpapūjaṁ karissāmi,",
  "pv35:10.4_0": "appamatto punappunan”ti.",
  "pv35:11.1_0": "Dhātuvivaṇṇapetavatthu dasamaṁ.",
  "pv35:12.1_0": "Cūḷavaggo tatiyo.",
  "pv35:13.1_0": "Tassuddānaṁ",
  "pv35:14.1_0": "Abhijjamāno kuṇḍiyo,",
  "pv35:14.2_0": "rathakārī bhusena ca;",
  "pv35:14.3_0": "Kumāro gaṇikā ceva,",
  "pv35:14.4_0": "dve luddā piṭṭhipūjanā;",
  "pv35:14.5_0": "Vaggo tena pavuccatīti."
}