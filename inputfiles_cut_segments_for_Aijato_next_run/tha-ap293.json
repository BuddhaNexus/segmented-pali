{
  "tha-ap293:0.1_0": "Therāpadāna",
  "tha-ap293:0.2_0": "Citakapūjakavagga",
  "tha-ap293:0.3_0": "1. Citakapūjakattheraapadāna",
  "tha-ap293:1.1_0": "“Ajito nāma nāmena,",
  "tha-ap293:1.2_0": "ahosiṁ brāhmaṇo tadā;",
  "tha-ap293:1.3_0": "Āhutiṁ yiṭṭhukāmohaṁ,",
  "tha-ap293:1.4_0": "nānāpupphaṁ samānayiṁ.",
  "tha-ap293:2.1_0": "Jalantaṁ citakaṁ disvā,",
  "tha-ap293:2.2_0": "sikhino lokabandhuno;",
  "tha-ap293:2.3_0": "Tañca pupphaṁ samānetvā,",
  "tha-ap293:2.4_0": "citake okiriṁ ahaṁ.",
  "tha-ap293:3.1_0": "Ekattiṁse ito kappe,",
  "tha-ap293:3.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap293:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap293:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap293:4.1_0": "Sattavīse ito kappe,",
  "tha-ap293:4.2_0": "sattāsuṁ manujādhipā;",
  "tha-ap293:4.3_0": "Supajjalitanāmā te,",
  "tha-ap293:4.4_0": "cakkavattī mahabbalā.",
  "tha-ap293:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap293:5.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap293:5.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap293:5.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap293:6.1_0": "Itthaṁ sudaṁ āyasmā citakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap293:7.1_0": "Citakapūjakattherassāpadānaṁ paṭhamaṁ."
}