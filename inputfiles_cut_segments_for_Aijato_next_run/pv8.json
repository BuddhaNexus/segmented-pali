{
  "pv8:0.1_0": "Petavatthu",
  "pv8:0.2_0": "Uragavagga",
  "pv8:0.3_0": "8. Goṇapetavatthu",
  "pv8:1.1_0": "“Kiṁ nu ummattarūpova,",
  "pv8:1.2_0": "lāyitvā haritaṁ tiṇaṁ;",
  "pv8:1.3_0": "Khāda khādāti lapasi,",
  "pv8:1.4_0": "gatasattaṁ jaraggavaṁ.",
  "pv8:2.1_0": "Na hi annena pānena,",
  "pv8:2.2_0": "mato goṇo samuṭṭhahe;",
  "pv8:2.3_0": "Tvaṁsi bālo ca dummedho,",
  "pv8:2.4_0": "yathā taññova dummatī”ti.",
  "pv8:3.1_0": "“Ime pādā idaṁ sīsaṁ,",
  "pv8:3.2_0": "ayaṁ kāyo savāladhi;",
  "pv8:3.3_0": "Nettā tatheva tiṭṭhanti,",
  "pv8:3.4_0": "ayaṁ goṇo samuṭṭhahe.",
  "pv8:4.1_0": "Nāyyakassa hatthapādā,",
  "pv8:4.2_0": "kāyo sīsañca dissati;",
  "pv8:4.3_0": "Rudaṁ mattikathūpasmiṁ,",
  "pv8:4.4_0": "nanu tvaññeva dummatī”ti.",
  "pv8:5.1_0": "“Ādittaṁ vata maṁ santaṁ,",
  "pv8:5.2_0": "ghatasittaṁva pāvakaṁ;",
  "pv8:5.3_0": "Vārinā viya osiñcaṁ,",
  "pv8:5.4_0": "sabbaṁ nibbāpaye daraṁ.",
  "pv8:6.1_0": "Abbahī vata me sallaṁ,",
  "pv8:6.2_0": "sokaṁ hadayanissitaṁ;",
  "pv8:6.3_0": "Yo me sokaparetassa,",
  "pv8:6.4_0": "pitusokaṁ apānudi.",
  "pv8:7.1_0": "Svāhaṁ abbūḷhasallosmi,",
  "pv8:7.2_0": "sītibhūtosmi nibbuto;",
  "pv8:7.3_0": "Na socāmi na rodāmi,",
  "pv8:7.4_0": "tava sutvāna māṇava”.",
  "pv8:8.1_0": "Evaṁ karonti sappaññā,",
  "pv8:8.2_0": "ye honti anukampakā;",
  "pv8:8.3_0": "Vinivattayanti sokamhā,",
  "pv8:8.4_0": "sujāto pitaraṁ yathāti.",
  "pv8:9.1_0": "Goṇapetavatthu aṭṭhamaṁ."
}