{
  "thig5.3:0.1_0": "Therīgāthā",
  "thig5.3:0.2_0": "Pañcakanipāta",
  "thig5.3:0.3_0": "3. Sīhātherīgāthā",
  "thig5.3:1.1_0": "“Ayoniso manasikārā,",
  "thig5.3:1.2_0": "kāmarāgena aṭṭitā;",
  "thig5.3:1.3_0": "Ahosiṁ uddhatā pubbe,",
  "thig5.3:1.4_0": "citte avasavattinī.",
  "thig5.3:2.1_0": "Pariyuṭṭhitā klesehi,",
  "thig5.3:2.2_0": "subhasaññānuvattinī;",
  "thig5.3:2.3_0": "Samaṁ cittassa na labhiṁ,",
  "thig5.3:2.4_0": "rāgacittavasānugā.",
  "thig5.3:3.1_0": "Kisā paṇḍu vivaṇṇā ca,",
  "thig5.3:3.2_0": "satta vassāni cārihaṁ;",
  "thig5.3:3.3_0": "Nāhaṁ divā vā rattiṁ vā,",
  "thig5.3:3.4_0": "sukhaṁ vindiṁ sudukkhitā.",
  "thig5.3:4.1_0": "Tato rajjuṁ gahetvāna,",
  "thig5.3:4.2_0": "pāvisiṁ vanamantaraṁ;",
  "thig5.3:4.3_0": "Varaṁ me idha ubbandhaṁ,",
  "thig5.3:4.4_0": "yañca hīnaṁ punācare.",
  "thig5.3:5.1_0": "Daḷhapāsaṁ karitvāna,",
  "thig5.3:5.2_0": "rukkhasākhāya bandhiya;",
  "thig5.3:5.3_0": "Pakkhipiṁ pāsaṁ gīvāyaṁ,",
  "thig5.3:5.4_0": "atha cittaṁ vimucci me”ti.",
  "thig5.3:6.1_0": "… Sīhā therī …."
}