{
  "tha-ap369:0.1_0": "Therāpadāna",
  "tha-ap369:0.2_0": "Mandāravapupphiyavagga",
  "tha-ap369:0.3_0": "7. Uddālakapupphiyattheraapadāna",
  "tha-ap369:1.1_0": "“Anomo nāma sambuddho,",
  "tha-ap369:1.2_0": "gaṅgākūle vasī tadā;",
  "tha-ap369:1.3_0": "Uddālakaṁ gahetvāna,",
  "tha-ap369:1.4_0": "pūjayiṁ aparājitaṁ.",
  "tha-ap369:2.1_0": "Ekattiṁse ito kappe,",
  "tha-ap369:2.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap369:2.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap369:2.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap369:3.1_0": "Paṭisambhidā catasso,",
  "tha-ap369:3.2_0": "…pe…",
  "tha-ap369:3.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap369:4.1_0": "Itthaṁ sudaṁ āyasmā uddālakapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap369:5.1_0": "Uddālakapupphiyattherassāpadānaṁ sattamaṁ."
}