{
  "thig6.2:0.1_0": "Therīgāthā",
  "thig6.2:0.2_0": "Chakkanipāta",
  "thig6.2:0.3_0": "2. Vāseṭṭhītherīgāthā",
  "thig6.2:1.1_0": "“Puttasokenahaṁ aṭṭā,",
  "thig6.2:1.2_0": "khittacittā visaññinī;",
  "thig6.2:1.3_0": "Naggā pakiṇṇakesī ca,",
  "thig6.2:1.4_0": "tena tena vicārihaṁ.",
  "thig6.2:2.1_0": "Vīthi saṅkārakūṭesu,",
  "thig6.2:2.2_0": "susāne rathiyāsu ca;",
  "thig6.2:2.3_0": "Acariṁ tīṇi vassāni,",
  "thig6.2:2.4_0": "khuppipāsāsamappitā.",
  "thig6.2:3.1_0": "Athaddasāsiṁ sugataṁ,",
  "thig6.2:3.2_0": "nagaraṁ mithilaṁ pati;",
  "thig6.2:3.3_0": "Adantānaṁ dametāraṁ,",
  "thig6.2:3.4_0": "sambuddhamakutobhayaṁ.",
  "thig6.2:4.1_0": "Sacittaṁ paṭiladdhāna,",
  "thig6.2:4.2_0": "vanditvāna upāvisiṁ;",
  "thig6.2:4.3_0": "So me dhammamadesesi,",
  "thig6.2:4.4_0": "anukampāya gotamo.",
  "thig6.2:5.1_0": "Tassa dhammaṁ suṇitvāna,",
  "thig6.2:5.2_0": "pabbajiṁ anagāriyaṁ;",
  "thig6.2:5.3_0": "Yuñjantī satthuvacane,",
  "thig6.2:5.4_0": "sacchākāsiṁ padaṁ sivaṁ.",
  "thig6.2:6.1_0": "Sabbe sokā samucchinnā,",
  "thig6.2:6.2_0": "pahīnā etadantikā;",
  "thig6.2:6.3_0": "Pariññātā hi me vatthū,",
  "thig6.2:6.4_0": "yato sokāna sambhavo”ti.",
  "thig6.2:7.1_0": "… Vāseṭṭhī therī …."
}