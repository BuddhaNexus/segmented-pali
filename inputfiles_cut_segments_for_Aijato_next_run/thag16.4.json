{
  "thag16.4:0.1_0": "Theragāthā",
  "thag16.4:0.2_0": "Vīsatinipāta",
  "thag16.4:0.3_0": "Paṭhamavagga",
  "thag16.4:0.4_0": "16.4. Raṭṭhapālattheragāthā",
  "thag16.4:1.1_0": "“Passa cittakataṁ bimbaṁ,",
  "thag16.4:1.2_0": "arukāyaṁ samussitaṁ;",
  "thag16.4:1.3_0": "Āturaṁ bahusaṅkappaṁ,",
  "thag16.4:1.4_0": "yassa natthi dhuvaṁ ṭhiti.",
  "thag16.4:2.1_0": "Passa cittakataṁ rūpaṁ,",
  "thag16.4:2.2_0": "maṇinā kuṇḍalena ca;",
  "thag16.4:2.3_0": "Aṭṭhiṁ tacena onaddhaṁ,",
  "thag16.4:2.4_0": "saha vatthehi sobhati.",
  "thag16.4:3.1_0": "Alattakakatā pādā,",
  "thag16.4:3.2_0": "mukhaṁ cuṇṇakamakkhitaṁ;",
  "thag16.4:3.3_0": "Alaṁ bālassa mohāya,",
  "thag16.4:3.4_0": "no ca pāragavesino.",
  "thag16.4:4.1_0": "Aṭṭhapadakatā kesā,",
  "thag16.4:4.2_0": "nettā añjanamakkhitā;",
  "thag16.4:4.3_0": "Alaṁ bālassa mohāya,",
  "thag16.4:4.4_0": "no ca pāragavesino.",
  "thag16.4:5.1_0": "Añjanīva navā cittā,",
  "thag16.4:5.2_0": "pūtikāyo alaṅkato;",
  "thag16.4:5.3_0": "Alaṁ bālassa mohāya,",
  "thag16.4:5.4_0": "no ca pāragavesino.",
  "thag16.4:6.1_0": "Odahi migavo pāsaṁ,",
  "thag16.4:6.2_0": "nāsadā vāguraṁ migo;",
  "thag16.4:6.3_0": "Bhutvā nivāpaṁ gacchāma,",
  "thag16.4:6.4_0": "kandante migabandhake.",
  "thag16.4:7.1_0": "Chinno pāso migavassa,",
  "thag16.4:7.2_0": "nāsadā vāguraṁ migo;",
  "thag16.4:7.3_0": "Bhutvā nivāpaṁ gacchāma,",
  "thag16.4:7.4_0": "socante migaluddake.",
  "thag16.4:8.1_0": "Passāmi loke sadhane manusse,",
  "thag16.4:8.2_0": "Laddhāna vittaṁ na dadanti mohā;",
  "thag16.4:8.3_0": "Luddhā dhanaṁ sannicayaṁ karonti,",
  "thag16.4:8.4_0": "Bhiyyova kāme abhipatthayanti.",
  "thag16.4:9.1_0": "Rājā pasayhappathaviṁ vijetvā,",
  "thag16.4:9.2_0": "Sasāgarantaṁ mahimāvasanto;",
  "thag16.4:9.3_0": "Oraṁ samuddassa atittarūpo,",
  "thag16.4:9.4_0": "Pāraṁ samuddassapi patthayetha.",
  "thag16.4:10.1_0": "Rājā ca aññe ca bahū manussā,",
  "thag16.4:10.2_0": "Avītataṇhā maraṇaṁ upenti;",
  "thag16.4:10.3_0": "Ūnāva hutvāna jahanti dehaṁ,",
  "thag16.4:10.4_0": "Kāmehi lokamhi na hatthi titti.",
  "thag16.4:11.1_0": "Kandanti naṁ ñātī pakiriya kese,",
  "thag16.4:11.2_0": "Aho vatā no amarāti cāhu;",
  "thag16.4:11.3_0": "Vatthena naṁ pārutaṁ nīharitvā,",
  "thag16.4:11.4_0": "Citaṁ samodhāya tato ḍahanti.",
  "thag16.4:12.1_0": "So ḍayhati sūlehi tujjamāno,",
  "thag16.4:12.2_0": "Ekena vatthena pahāya bhoge;",
  "thag16.4:12.3_0": "Na mīyamānassa bhavanti tāṇā,",
  "thag16.4:12.4_0": "Ñātī ca mittā atha vā sahāyā.",
  "thag16.4:13.1_0": "Dāyādakā tassa dhanaṁ haranti,",
  "thag16.4:13.2_0": "Satto pana gacchati yena kammaṁ;",
  "thag16.4:13.3_0": "Na mīyamānaṁ dhanamanveti kiñci,",
  "thag16.4:13.4_0": "Puttā ca dārā ca dhanañca raṭṭhaṁ.",
  "thag16.4:14.1_0": "Na dīghamāyuṁ labhate dhanena,",
  "thag16.4:14.2_0": "Na cāpi vittena jaraṁ vihanti;",
  "thag16.4:14.3_0": "Appaṁ hidaṁ jīvitamāhu dhīrā,",
  "thag16.4:14.4_0": "Asassataṁ vippariṇāmadhammaṁ.",
  "thag16.4:15.1_0": "Aḍḍhā daliddā ca phusanti phassaṁ,",
  "thag16.4:15.2_0": "Bālo ca dhīro ca tatheva phuṭṭho;",
  "thag16.4:15.3_0": "Bālo hi bālyā vadhitova seti,",
  "thag16.4:15.4_0": "Dhīro ca no vedhati phassaphuṭṭho.",
  "thag16.4:16.1_0": "Tasmā hi paññāva dhanena seyyā,",
  "thag16.4:16.2_0": "Yāya vosānamidhādhigacchati;",
  "thag16.4:16.3_0": "Abyositattā hi bhavābhavesu,",
  "thag16.4:16.4_0": "Pāpāni kammāni karoti mohā.",
  "thag16.4:17.1_0": "Upeti gabbhañca parañca lokaṁ,",
  "thag16.4:17.2_0": "Saṁsāramāpajja paramparāya;",
  "thag16.4:17.3_0": "Tassappapañño abhisaddahanto,",
  "thag16.4:17.4_0": "Upeti gabbhañca parañca lokaṁ.",
  "thag16.4:18.1_0": "Coro yathā sandhimukhe gahīto,",
  "thag16.4:18.2_0": "Sakammunā haññati pāpadhammo;",
  "thag16.4:18.3_0": "Evaṁ pajā pecca paramhi loke,",
  "thag16.4:18.4_0": "Sakammunā haññati pāpadhammo.",
  "thag16.4:19.1_0": "Kāmā hi citrā madhurā manoramā,",
  "thag16.4:19.2_0": "Virūparūpena mathenti cittaṁ;",
  "thag16.4:19.3_0": "Ādīnavaṁ kāmaguṇesu disvā,",
  "thag16.4:19.4_0": "Tasmā ahaṁ pabbajitomhi rāja.",
  "thag16.4:20.1_0": "Dumapphalānīva patanti māṇavā,",
  "thag16.4:20.2_0": "Daharā ca vuḍḍhā ca sarīrabhedā;",
  "thag16.4:20.3_0": "Etampi disvā pabbajitomhi rāja,",
  "thag16.4:20.4_0": "Apaṇṇakaṁ sāmaññameva seyyo.",
  "thag16.4:21.1_0": "Saddhāyāhaṁ pabbajito,",
  "thag16.4:21.2_0": "upeto jinasāsane;",
  "thag16.4:21.3_0": "Avañjhā mayhaṁ pabbajjā,",
  "thag16.4:21.4_0": "anaṇo bhuñjāmi bhojanaṁ.",
  "thag16.4:22.1_0": "Kāme ādittato disvā,",
  "thag16.4:22.2_0": "Jātarūpāni satthato;",
  "thag16.4:22.3_0": "Gabbhavokkantito dukkhaṁ,",
  "thag16.4:22.4_0": "Nirayesu mahabbhayaṁ.",
  "thag16.4:23.1_0": "Etamādīnavaṁ ñatvā,",
  "thag16.4:23.2_0": "saṁvegaṁ alabhiṁ tadā;",
  "thag16.4:23.3_0": "Sohaṁ viddho tadā santo,",
  "thag16.4:23.4_0": "sampatto āsavakkhayaṁ.",
  "thag16.4:24.1_0": "Pariciṇṇo mayā satthā,",
  "thag16.4:24.2_0": "kataṁ buddhassa sāsanaṁ;",
  "thag16.4:24.3_0": "Ohito garuko bhāro,",
  "thag16.4:24.4_0": "bhavanetti samūhatā.",
  "thag16.4:25.1_0": "Yassatthāya pabbajito,",
  "thag16.4:25.2_0": "agārasmānagāriyaṁ;",
  "thag16.4:25.3_0": "So me attho anuppatto,",
  "thag16.4:25.4_0": "sabbasaṁyojanakkhayo”ti.",
  "thag16.4:25.5_0": "… Raṭṭhapālo thero …."
}