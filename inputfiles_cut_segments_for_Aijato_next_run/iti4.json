{
  "iti4:0.1_0": "Itivuttaka 4",
  "iti4:0.2_0": "Ekakanipāta",
  "iti4:0.3_0": "Paṭhamavagga",
  "iti4:0.4_0": "Kodhasutta",
  "iti4:1.1_0": "Vuttañhetaṁ bhagavatā vuttamarahatāti me sutaṁ:",
  "iti4:2.1_0": "“Ekadhammaṁ, bhikkhave, pajahatha;",
  "iti4:2.2_0": "ahaṁ vo pāṭibhogo anāgāmitāya.",
  "iti4:2.3_0": "Katamaṁ ekadhammaṁ?",
  "iti4:2.4_0": "Kodhaṁ, bhikkhave, ekadhammaṁ pajahatha;",
  "iti4:2.5_0": "ahaṁ vo pāṭibhogo anāgāmitāyā”ti.",
  "iti4:2.6_0": "Etamatthaṁ bhagavā avoca.",
  "iti4:2.7_0": "Tatthetaṁ iti vuccati:",
  "iti4:3.1_0": "“Yena kodhena kuddhāse,",
  "iti4:3.2_0": "sattā gacchanti duggatiṁ;",
  "iti4:3.3_0": "Taṁ kodhaṁ sammadaññāya,",
  "iti4:3.4_0": "pajahanti vipassino;",
  "iti4:3.5_0": "Pahāya na punāyanti,",
  "iti4:3.6_0": "imaṁ lokaṁ kudācanan”ti.",
  "iti4:4.1_0": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti4:4.2_0": "Catutthaṁ."
}