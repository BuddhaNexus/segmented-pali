{
  "tha-ap287:0.1_0": "Therāpadāna",
  "tha-ap287:0.2_0": "Paṇṇadāyakavagga",
  "tha-ap287:0.3_0": "5. Maghavapupphiyattheraapadāna",
  "tha-ap287:1.1_0": "“Nammadānadiyā tīre,",
  "tha-ap287:1.2_0": "sayambhū aparājito;",
  "tha-ap287:1.3_0": "Samādhiṁ so samāpanno,",
  "tha-ap287:1.4_0": "vippasanno anāvilo.",
  "tha-ap287:2.1_0": "Disvā pasannasumano,",
  "tha-ap287:2.2_0": "sambuddhaṁ aparājitaṁ;",
  "tha-ap287:2.3_0": "Tāhaṁ maghavapupphena,",
  "tha-ap287:2.4_0": "sayambhuṁ pūjayiṁ tadā.",
  "tha-ap287:3.1_0": "Ekanavutito kappe,",
  "tha-ap287:3.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap287:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap287:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap287:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap287:4.2_0": "…pe…",
  "tha-ap287:4.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap287:5.1_0": "Itthaṁ sudaṁ āyasmā maghavapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap287:6.1_0": "Maghavapupphiyattherassāpadānaṁ pañcamaṁ."
}