{
  "pv32:0.1_0": "Petavatthu",
  "pv32:0.2_0": "Cūḷavagga",
  "pv32:0.3_0": "7. Migaluddakapetavatthu",
  "pv32:1.1_0": "“Naranāripurakkhato yuvā,",
  "pv32:1.2_0": "Rajanīyehi kāmaguṇehi sobhasi;",
  "pv32:1.3_0": "Divasaṁ anubhosi kāraṇaṁ,",
  "pv32:1.4_0": "Kimakāsi purimāya jātiyā”ti.",
  "pv32:2.1_0": "“Ahaṁ rājagahe ramme,",
  "pv32:2.2_0": "ramaṇīye giribbaje;",
  "pv32:2.3_0": "Migaluddo pure āsiṁ,",
  "pv32:2.4_0": "lohitapāṇi dāruṇo.",
  "pv32:3.1_0": "Avirodhakaresu pāṇisu,",
  "pv32:3.2_0": "Puthusattesu paduṭṭhamānaso;",
  "pv32:3.3_0": "Vicariṁ atidāruṇo sadā,",
  "pv32:3.4_0": "Parahiṁsāya rato asaññato.",
  "pv32:4.1_0": "Tassa me sahāyo suhadayo,",
  "pv32:4.2_0": "Saddho āsi upāsako;",
  "pv32:4.3_0": "Sopi maṁ anukampanto,",
  "pv32:4.4_0": "Nivāresi punappunaṁ.",
  "pv32:5.1_0": "‘Mākāsi pāpakaṁ kammaṁ,",
  "pv32:5.2_0": "Mā tāta duggatiṁ agā;",
  "pv32:5.3_0": "Sace icchasi pecca sukhaṁ,",
  "pv32:5.4_0": "Virama pāṇavadhā asaṁyamā’.",
  "pv32:6.1_0": "Tassāhaṁ vacanaṁ sutvā,",
  "pv32:6.2_0": "Sukhakāmassa hitānukampino;",
  "pv32:6.3_0": "Nākāsiṁ sakalānusāsaniṁ,",
  "pv32:6.4_0": "Cirapāpābhirato abuddhimā.",
  "pv32:7.1_0": "So maṁ puna bhūrisumedhaso,",
  "pv32:7.2_0": "Anukampāya saṁyame nivesayi;",
  "pv32:7.3_0": "‘Sace divā hanasi pāṇino,",
  "pv32:7.4_0": "Atha te rattiṁ bhavatu saṁyamo’.",
  "pv32:8.1_0": "Svāhaṁ divā hanitvā pāṇino,",
  "pv32:8.2_0": "Virato rattimahosi saññato;",
  "pv32:8.3_0": "Rattāhaṁ paricāremi,",
  "pv32:8.4_0": "Divā khajjāmi duggato.",
  "pv32:9.1_0": "Tassa kammassa kusalassa,",
  "pv32:9.2_0": "Anubhomi rattiṁ amānusiṁ;",
  "pv32:9.3_0": "Divā paṭihatāva kukkurā,",
  "pv32:9.4_0": "Upadhāvanti samantā khādituṁ.",
  "pv32:10.1_0": "Ye ca te satatānuyogino,",
  "pv32:10.2_0": "Dhuvaṁ payuttā sugatassa sāsane;",
  "pv32:10.3_0": "Maññāmi te amatameva kevalaṁ,",
  "pv32:10.4_0": "Adhigacchanti padaṁ asaṅkhatan”ti.",
  "pv32:11.1_0": "Migaluddakapetavatthu sattamaṁ."
}