{
  "ja440:0.1_0": "Jātaka",
  "ja440:0.2_0": "Dasakanipāta",
  "ja440:0.3_0": "Catudvāravagga",
  "ja440:0.4_0": "2. Kaṇhajātaka",
  "ja440:1.1_0": "“Kaṇho vatāyaṁ puriso,",
  "ja440:1.2_0": "kaṇhaṁ bhuñjati bhojanaṁ;",
  "ja440:1.3_0": "Kaṇhe bhūmipadesasmiṁ,",
  "ja440:1.4_0": "na mayhaṁ manaso piyo”.",
  "ja440:2.1_0": "“Na kaṇho tacasā hoti,",
  "ja440:2.2_0": "antosāro hi brāhmaṇo;",
  "ja440:2.3_0": "Yasmiṁ pāpāni kammāni,",
  "ja440:2.4_0": "sa ve kaṇho sujampati”.",
  "ja440:3.1_0": "“Etasmiṁ te sulapite,",
  "ja440:3.2_0": "patirūpe subhāsite;",
  "ja440:3.3_0": "Varaṁ brāhmaṇa te dammi,",
  "ja440:3.4_0": "yaṁ kiñci manasicchasi”.",
  "ja440:4.1_0": "“Varañce me ado sakka,",
  "ja440:4.2_0": "sabbabhūtānamissara;",
  "ja440:4.3_0": "Sunikkodhaṁ suniddosaṁ,",
  "ja440:4.4_0": "nillobhaṁ vuttimattano;",
  "ja440:4.5_0": "Nisnehamabhikaṅkhāmi,",
  "ja440:4.6_0": "ete me caturo vare”.",
  "ja440:5.1_0": "“Kiṁ nu kodhe vā dose vā,",
  "ja440:5.2_0": "lobhe snehe ca brāhmaṇa;",
  "ja440:5.3_0": "Ādīnavaṁ tvaṁ passasi,",
  "ja440:5.4_0": "taṁ me akkhāhi pucchito”.",
  "ja440:6.1_0": "“Appo hutvā bahu hoti,",
  "ja440:6.2_0": "vaḍḍhate so akhantijo;",
  "ja440:6.3_0": "Āsaṅgī bahupāyāso,",
  "ja440:6.4_0": "tasmā kodhaṁ na rocaye.",
  "ja440:7.1_0": "Duṭṭhassa pharusā vācā,",
  "ja440:7.2_0": "parāmāso anantarā;",
  "ja440:7.3_0": "Tato pāṇi tato daṇḍo,",
  "ja440:7.4_0": "satthassa paramā gati;",
  "ja440:7.5_0": "Doso kodhasamuṭṭhāno,",
  "ja440:7.6_0": "tasmā dosaṁ na rocaye.",
  "ja440:8.1_0": "Ālopa sāhasākārā,",
  "ja440:8.2_0": "nikatī vañcanāni ca;",
  "ja440:8.3_0": "Dissanti lobhadhammesu,",
  "ja440:8.4_0": "tasmā lobhaṁ na rocaye.",
  "ja440:9.1_0": "Snehasaṅgathitā ganthā,",
  "ja440:9.2_0": "senti manomayā puthū;",
  "ja440:9.3_0": "Te bhusaṁ upatāpenti,",
  "ja440:9.4_0": "tasmā snehaṁ na rocaye”.",
  "ja440:10.1_0": "“Etasmiṁ te sulapite,",
  "ja440:10.2_0": "patirūpe subhāsite;",
  "ja440:10.3_0": "Varaṁ brāhmaṇa te dammi,",
  "ja440:10.4_0": "yaṁ kiñci manasicchasi”.",
  "ja440:11.1_0": "“Varañce me ado sakka,",
  "ja440:11.2_0": "sabbabhūtānamissara;",
  "ja440:11.3_0": "Araññe me viharato,",
  "ja440:11.4_0": "niccaṁ ekavihārino;",
  "ja440:11.5_0": "Ābādhā mā uppajjeyyuṁ,",
  "ja440:11.6_0": "antarāyakarā bhusā”.",
  "ja440:12.1_0": "“Etasmiṁ te sulapite,",
  "ja440:12.2_0": "patirūpe subhāsite;",
  "ja440:12.3_0": "Varaṁ brāhmaṇa te dammi,",
  "ja440:12.4_0": "yaṁ kiñci manasicchasi”.",
  "ja440:13.1_0": "“Varañce me ado sakka,",
  "ja440:13.2_0": "sabbabhūtānamissara;",
  "ja440:13.3_0": "Na mano vā sarīraṁ vā,",
  "ja440:13.4_0": "maṁ-kate sakka kassaci;",
  "ja440:13.5_0": "Kadāci upahaññetha,",
  "ja440:13.6_0": "etaṁ sakka varaṁ vare”ti.",
  "ja440:14.1_0": "Kaṇhajātakaṁ dutiyaṁ."
}