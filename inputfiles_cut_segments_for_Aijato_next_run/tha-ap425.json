{
  "tha-ap425:0.1_0": "Therāpadāna",
  "tha-ap425:0.2_0": "Sakiṁsammajjakavagga",
  "tha-ap425:0.3_0": "3. Ekāsanadāyakattheraapadāna",
  "tha-ap425:1.1_0": "“Himavantassāvidūre,",
  "tha-ap425:1.2_0": "gosito nāma pabbato;",
  "tha-ap425:1.3_0": "Assamo sukato mayhaṁ,",
  "tha-ap425:1.4_0": "paṇṇasālā sumāpitā.",
  "tha-ap425:2.1_0": "Nārado nāma nāmena,",
  "tha-ap425:2.2_0": "kassapo iti maṁ vidū;",
  "tha-ap425:2.3_0": "Suddhimaggaṁ gavesanto,",
  "tha-ap425:2.4_0": "vasāmi gosite tadā.",
  "tha-ap425:3.1_0": "Padumuttaro nāma jino,",
  "tha-ap425:3.2_0": "sabbadhammāna pāragū;",
  "tha-ap425:3.3_0": "Vivekakāmo sambuddho,",
  "tha-ap425:3.4_0": "agañchi anilañjasā.",
  "tha-ap425:4.1_0": "Vanagge gacchamānassa,",
  "tha-ap425:4.2_0": "disvā raṁsiṁ mahesino;",
  "tha-ap425:4.3_0": "Kaṭṭhamañcaṁ paññāpetvā,",
  "tha-ap425:4.4_0": "ajinañca apatthariṁ.",
  "tha-ap425:5.1_0": "Āsanaṁ paññapetvāna,",
  "tha-ap425:5.2_0": "sire katvāna añjaliṁ;",
  "tha-ap425:5.3_0": "Somanassaṁ paveditvā,",
  "tha-ap425:5.4_0": "idaṁ vacanamabraviṁ.",
  "tha-ap425:6.1_0": "‘Sallakatto mahāvīra,",
  "tha-ap425:6.2_0": "āturānaṁ tikicchako;",
  "tha-ap425:6.3_0": "Mamaṁ rogaparetassa,",
  "tha-ap425:6.4_0": "tikicchaṁ dehi nāyaka.",
  "tha-ap425:7.1_0": "Kallatthikā ye passanti,",
  "tha-ap425:7.2_0": "buddhaseṭṭha tuvaṁ mune;",
  "tha-ap425:7.3_0": "Dhuvatthasiddhiṁ papponti,",
  "tha-ap425:7.4_0": "etesaṁ ajaro bhave.",
  "tha-ap425:8.1_0": "Na me deyyadhammo atthi,",
  "tha-ap425:8.2_0": "pavattaphalabhojihaṁ;",
  "tha-ap425:8.3_0": "Idaṁ me āsanaṁ atthi,",
  "tha-ap425:8.4_0": "nisīda kaṭṭhamañcake’.",
  "tha-ap425:9.1_0": "Nisīdi tattha bhagavā,",
  "tha-ap425:9.2_0": "asambhītova kesarī;",
  "tha-ap425:9.3_0": "Muhuttaṁ vītināmetvā,",
  "tha-ap425:9.4_0": "idaṁ vacanamabravi.",
  "tha-ap425:10.1_0": "‘Vissattho hohi mā bhāyi,",
  "tha-ap425:10.2_0": "laddho jotiraso tayā;",
  "tha-ap425:10.3_0": "Yaṁ tuyhaṁ patthitaṁ sabbaṁ,",
  "tha-ap425:10.4_0": "paripūrissatināgate.",
  "tha-ap425:11.1_0": "Na moghaṁ taṁ kataṁ tuyhaṁ,",
  "tha-ap425:11.2_0": "puññakkhette anuttare;",
  "tha-ap425:11.3_0": "Sakkā uddharituṁ attā,",
  "tha-ap425:11.4_0": "yassa cittaṁ paṇīhitaṁ.",
  "tha-ap425:12.1_0": "Imināsanadānena,",
  "tha-ap425:12.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap425:12.3_0": "Kappasatasahassāni,",
  "tha-ap425:12.4_0": "vinipātaṁ na gacchasi.",
  "tha-ap425:13.1_0": "Paññāsakkhattuṁ devindo,",
  "tha-ap425:13.2_0": "devarajjaṁ karissasi;",
  "tha-ap425:13.3_0": "Asītikkhattuṁ rājā ca,",
  "tha-ap425:13.4_0": "cakkavattī bhavissasi.",
  "tha-ap425:14.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap425:14.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap425:14.3_0": "Sabbattha sukhito hutvā,",
  "tha-ap425:14.4_0": "saṁsāre saṁsarissasi’.",
  "tha-ap425:15.1_0": "Idaṁ vatvāna sambuddho,",
  "tha-ap425:15.2_0": "jalajuttamanāmako;",
  "tha-ap425:15.3_0": "Nabhaṁ abbhuggamī vīro,",
  "tha-ap425:15.4_0": "haṁsarājāva ambare.",
  "tha-ap425:16.1_0": "Hatthiyānaṁ assayānaṁ,",
  "tha-ap425:16.2_0": "sarathaṁ sandamānikaṁ;",
  "tha-ap425:16.3_0": "Labhāmi sabbamevetaṁ,",
  "tha-ap425:16.4_0": "ekāsanassidaṁ phalaṁ.",
  "tha-ap425:17.1_0": "Kānanaṁ pavisitvāpi,",
  "tha-ap425:17.2_0": "yadā icchāmi āsanaṁ;",
  "tha-ap425:17.3_0": "Mama saṅkappamaññāya,",
  "tha-ap425:17.4_0": "pallaṅko upatiṭṭhati.",
  "tha-ap425:18.1_0": "Vārimajjhagato santo,",
  "tha-ap425:18.2_0": "yadā icchāmi āsanaṁ;",
  "tha-ap425:18.3_0": "Mama saṅkappamaññāya,",
  "tha-ap425:18.4_0": "pallaṅko upatiṭṭhati.",
  "tha-ap425:19.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap425:19.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap425:19.3_0": "Pallaṅkasatasahassāni,",
  "tha-ap425:19.4_0": "parivārenti maṁ sadā.",
  "tha-ap425:20.1_0": "Duve bhave saṁsarāmi,",
  "tha-ap425:20.2_0": "devatte atha mānuse;",
  "tha-ap425:20.3_0": "Duve kule pajāyāmi,",
  "tha-ap425:20.4_0": "khattiye atha brāhmaṇe.",
  "tha-ap425:21.1_0": "Ekāsanaṁ daditvāna,",
  "tha-ap425:21.2_0": "puññakkhette anuttare;",
  "tha-ap425:21.3_0": "Dhammapallaṅkamādāya,",
  "tha-ap425:21.4_0": "viharāmi anāsavo.",
  "tha-ap425:22.1_0": "Satasahassito kappe,",
  "tha-ap425:22.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap425:22.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap425:22.4_0": "ekāsanassidaṁ phalaṁ.",
  "tha-ap425:23.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap425:23.2_0": "…pe…",
  "tha-ap425:23.3_0": "viharāmi anāsavo.",
  "tha-ap425:24.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap425:24.2_0": "…pe…",
  "tha-ap425:24.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap425:25.1_0": "Paṭisambhidā catasso,",
  "tha-ap425:25.2_0": "…pe…",
  "tha-ap425:25.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap425:26.1_0": "Itthaṁ sudaṁ āyasmā ekāsanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap425:27.1_0": "Ekāsanadāyakattherassāpadānaṁ tatiyaṁ."
}