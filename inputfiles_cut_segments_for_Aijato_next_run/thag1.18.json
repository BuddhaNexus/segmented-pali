{
  "thag1.18:0.1_0": "Theragāthā",
  "thag1.18:0.2_0": "Ekakanipāta",
  "thag1.18:0.3_0": "Dutiyavagga",
  "thag1.18:0.4_0": "1.18. Siṅgālapituttheragāthā",
  "thag1.18:1.1_0": "“Ahu buddhassa dāyādo,",
  "thag1.18:1.2_0": "bhikkhu bhesakaḷāvane;",
  "thag1.18:1.3_0": "Kevalaṁ aṭṭhisaññāya,",
  "thag1.18:1.4_0": "apharī pathaviṁ imaṁ;",
  "thag1.18:1.5_0": "Maññehaṁ kāmarāgaṁ so,",
  "thag1.18:1.6_0": "khippameva pahissatī”ti.",
  "thag1.18:1.7_0": "… Siṅgālapitā thero …."
}