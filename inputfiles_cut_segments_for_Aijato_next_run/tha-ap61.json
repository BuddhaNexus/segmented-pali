{
  "tha-ap61:0.1_0": "Therāpadāna",
  "tha-ap61:0.2_0": "Bījanivagga",
  "tha-ap61:0.3_0": "9. Padumattheraapadāna",
  "tha-ap61:1.1_0": "“Catusaccaṁ pakāsento,",
  "tha-ap61:1.2_0": "varadhammappavattako;",
  "tha-ap61:1.3_0": "Vassate amataṁ vuṭṭhiṁ,",
  "tha-ap61:1.4_0": "nibbāpento mahājanaṁ.",
  "tha-ap61:2.1_0": "Sadhajaṁ padumaṁ gayha,",
  "tha-ap61:2.2_0": "aḍḍhakose ṭhito ahaṁ;",
  "tha-ap61:2.3_0": "Padumuttaramunissa,",
  "tha-ap61:2.4_0": "pahaṭṭho ukkhipimambare.",
  "tha-ap61:3.1_0": "Āgacchante ca padume,",
  "tha-ap61:3.2_0": "abbhuto āsi tāvade;",
  "tha-ap61:3.3_0": "Mama saṅkappamaññāya,",
  "tha-ap61:3.4_0": "paggaṇhi vadataṁ varo.",
  "tha-ap61:4.1_0": "Karaseṭṭhena paggayha,",
  "tha-ap61:4.2_0": "jalajaṁ pupphamuttamaṁ;",
  "tha-ap61:4.3_0": "Bhikkhusaṅghe ṭhito satthā,",
  "tha-ap61:4.4_0": "imā gāthā abhāsatha.",
  "tha-ap61:5.1_0": "‘Yenidaṁ padumaṁ khittaṁ,",
  "tha-ap61:5.2_0": "sabbaññumhi vināyake;",
  "tha-ap61:5.3_0": "Tamahaṁ kittayissāmi,",
  "tha-ap61:5.4_0": "suṇātha mama bhāsato.",
  "tha-ap61:6.1_0": "Tiṁsakappāni devindo,",
  "tha-ap61:6.2_0": "devarajjaṁ karissati;",
  "tha-ap61:6.3_0": "Pathabyā rajjaṁ sattasataṁ,",
  "tha-ap61:6.4_0": "vasudhaṁ āvasissati.",
  "tha-ap61:7.1_0": "Tattha pattaṁ gaṇetvāna,",
  "tha-ap61:7.2_0": "cakkavattī bhavissati;",
  "tha-ap61:7.3_0": "Ākāsato pupphavuṭṭhi,",
  "tha-ap61:7.4_0": "abhivassissatī tadā.",
  "tha-ap61:8.1_0": "Kappasatasahassamhi,",
  "tha-ap61:8.2_0": "okkākakulasambhavo;",
  "tha-ap61:8.3_0": "Gotamo nāma gottena,",
  "tha-ap61:8.4_0": "satthā loke bhavissati.",
  "tha-ap61:9.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap61:9.2_0": "oraso dhammanimmito;",
  "tha-ap61:9.3_0": "Sabbāsave pariññāya,",
  "tha-ap61:9.4_0": "nibbāyissatināsavo’.",
  "tha-ap61:10.1_0": "Nikkhamitvāna kucchimhā,",
  "tha-ap61:10.2_0": "sampajāno patissato;",
  "tha-ap61:10.3_0": "Jātiyā pañcavassohaṁ,",
  "tha-ap61:10.4_0": "arahattaṁ apāpuṇiṁ.",
  "tha-ap61:11.1_0": "Paṭisambhidā catasso,",
  "tha-ap61:11.2_0": "…pe…",
  "tha-ap61:11.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap61:12.1_0": "Itthaṁ sudaṁ āyasmā padumo thero imā gāthāyo abhāsitthāti.",
  "tha-ap61:13.1_0": "Padumattherassāpadānaṁ navamaṁ."
}