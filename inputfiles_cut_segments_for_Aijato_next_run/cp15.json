{
  "cp15:0.1_0": "Cariyāpiṭaka",
  "cp15:0.2_0": "Hatthināgavagga",
  "cp15:0.3_0": "Sīlapāramī 5",
  "cp15:0.4_0": "Mahiṁsarājacariya",
  "cp15:1.1_0": "“Punāparaṁ yadā homi,",
  "cp15:1.2_0": "mahiṁso pavanacārako;",
  "cp15:1.3_0": "Pavaḍḍhakāyo balavā,",
  "cp15:1.4_0": "mahanto bhīmadassano.",
  "cp15:2.1_0": "Pabbhāre giridugge ca,",
  "cp15:2.2_0": "rukkhamūle dakāsaye;",
  "cp15:2.3_0": "Hotettha ṭhānaṁ mahiṁsānaṁ,",
  "cp15:2.4_0": "koci koci tahiṁ tahiṁ.",
  "cp15:3.1_0": "Vicaranto brahāraññe,",
  "cp15:3.2_0": "ṭhānaṁ addasa bhaddakaṁ;",
  "cp15:3.3_0": "Taṁ ṭhānaṁ upagantvāna,",
  "cp15:3.4_0": "tiṭṭhāmi ca sayāmi ca.",
  "cp15:4.1_0": "Athettha kapimāgantvā,",
  "cp15:4.2_0": "pāpo anariyo lahu;",
  "cp15:4.3_0": "Khandhe nalāṭe bhamuke,",
  "cp15:4.4_0": "mutteti ohadeti taṁ.",
  "cp15:5.1_0": "Sakimpi divasaṁ dutiyaṁ,",
  "cp15:5.2_0": "tatiyaṁ catutthampi ca;",
  "cp15:5.3_0": "Dūseti maṁ sabbakālaṁ,",
  "cp15:5.4_0": "tena homi upadduto.",
  "cp15:6.1_0": "Mamaṁ upaddutaṁ disvā,",
  "cp15:6.2_0": "yakkho maṁ idamabravi;",
  "cp15:6.3_0": "‘Nāsehetaṁ chavaṁ pāpaṁ,",
  "cp15:6.4_0": "siṅgehi ca khurehi ca’.",
  "cp15:7.1_0": "Evaṁ vutte, tadā yakkhe,",
  "cp15:7.2_0": "ahaṁ taṁ idamabraviṁ;",
  "cp15:7.3_0": "‘Kiṁ tvaṁ makkhesi kuṇapena,",
  "cp15:7.4_0": "pāpena anariyena maṁ.",
  "cp15:8.1_0": "Yadihaṁ tassa pakuppeyyaṁ,",
  "cp15:8.2_0": "tato hīnataro bhave;",
  "cp15:8.3_0": "Sīlañca me pabhijjeyya,",
  "cp15:8.4_0": "viññū ca garaheyyu maṁ.",
  "cp15:9.1_0": "Hīḷitā jīvitā vāpi,",
  "cp15:9.2_0": "parisuddhena mataṁ varaṁ;",
  "cp15:9.3_0": "Kyāhaṁ jīvitahetūpi,",
  "cp15:9.4_0": "kāhāmi paraheṭhanaṁ’.",
  "cp15:10.1_0": "Mamevāyaṁ maññamāno,",
  "cp15:10.2_0": "aññepevaṁ karissati;",
  "cp15:10.3_0": "Teva tassa vadhissanti,",
  "cp15:10.4_0": "sā me mutti bhavissati.",
  "cp15:11.1_0": "Hīnamajjhimaukkaṭṭhe,",
  "cp15:11.2_0": "sahanto avamānitaṁ;",
  "cp15:11.3_0": "Evaṁ labhati sappañño,",
  "cp15:11.4_0": "manasā yathāpatthitan”ti.",
  "cp15:12.1_0": "Mahiṁsarājacariyaṁ pañcamaṁ."
}