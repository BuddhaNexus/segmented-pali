{
  "cp30:0.1_0": "Cariyāpiṭaka",
  "cp30:0.2_0": "Yudhañjayavagga",
  "cp30:0.3_0": "Saccapāramī 4",
  "cp30:0.4_0": "Maccharājacariya",
  "cp30:1.1_0": "“Punāparaṁ yadā homi,",
  "cp30:1.2_0": "maccharājā mahāsare;",
  "cp30:1.3_0": "Uṇhe sūriyasantāpe,",
  "cp30:1.4_0": "sare udaka khīyatha.",
  "cp30:2.1_0": "Tato kākā ca gijjhā ca,",
  "cp30:2.2_0": "kaṅkā kulalasenakā;",
  "cp30:2.3_0": "Bhakkhayanti divārattiṁ,",
  "cp30:2.4_0": "macche upanisīdiya.",
  "cp30:3.1_0": "Evaṁ cintesahaṁ tattha,",
  "cp30:3.2_0": "saha ñātīhi pīḷito;",
  "cp30:3.3_0": "‘Kena nu kho upāyena,",
  "cp30:3.4_0": "ñātī dukkhā pamocaye’.",
  "cp30:4.1_0": "Vicintayitvā dhammatthaṁ,",
  "cp30:4.2_0": "saccaṁ addasa passayaṁ;",
  "cp30:4.3_0": "Sacce ṭhatvā pamocesiṁ,",
  "cp30:4.4_0": "ñātīnaṁ taṁ atikkhayaṁ.",
  "cp30:5.1_0": "Anussaritvā sataṁ dhammaṁ,",
  "cp30:5.2_0": "paramatthaṁ vicintayaṁ;",
  "cp30:5.3_0": "Akāsiṁ saccakiriyaṁ,",
  "cp30:5.4_0": "yaṁ loke dhuvasassataṁ.",
  "cp30:6.1_0": "‘Yato sarāmi attānaṁ,",
  "cp30:6.2_0": "yato pattosmi viññutaṁ;",
  "cp30:6.3_0": "Nābhijānāmi sañcicca,",
  "cp30:6.4_0": "ekapāṇampi hiṁsitaṁ.",
  "cp30:7.1_0": "Etena saccavajjena,",
  "cp30:7.2_0": "pajjunno abhivassatu;",
  "cp30:7.3_0": "Abhitthanaya pajjunna,",
  "cp30:7.4_0": "nidhiṁ kākassa nāsaya;",
  "cp30:7.5_0": "Kākaṁ sokāya randhehi,",
  "cp30:7.6_0": "macche sokā pamocaya’.",
  "cp30:8.1_0": "Saha kate saccavare,",
  "cp30:8.2_0": "pajjunno abhigajjiya;",
  "cp30:8.3_0": "Thalaṁ ninnañca pūrento,",
  "cp30:8.4_0": "khaṇena abhivassatha.",
  "cp30:9.1_0": "Evarūpaṁ saccavaraṁ,",
  "cp30:9.2_0": "katvā vīriyamuttamaṁ;",
  "cp30:9.3_0": "Vassāpesiṁ mahāmeghaṁ,",
  "cp30:9.4_0": "saccatejabalassito;",
  "cp30:9.5_0": "Saccena me samo natthi,",
  "cp30:9.6_0": "esā me saccapāramī”ti.",
  "cp30:10.1_0": "Maccharājacariyaṁ dasamaṁ."
}