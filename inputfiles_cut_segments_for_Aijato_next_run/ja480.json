{
  "ja480:0.1_0": "Jātaka",
  "ja480:0.2_0": "Terasakanipāta",
  "ja480:0.3_0": "Ambavagga",
  "ja480:0.4_0": "7. Akittijātaka",
  "ja480:1.1_0": "“Akittiṁ disvā sammantaṁ,",
  "ja480:1.2_0": "sakko bhūtapatī bravi;",
  "ja480:1.3_0": "Kiṁ patthayaṁ mahābrahme,",
  "ja480:1.4_0": "eko sammasi ghammani”.",
  "ja480:2.1_0": "“Dukkho punabbhavo sakka,",
  "ja480:2.2_0": "sarīrassa ca bhedanaṁ;",
  "ja480:2.3_0": "Sammohamaraṇaṁ dukkhaṁ,",
  "ja480:2.4_0": "tasmā sammāmi vāsava”.",
  "ja480:3.1_0": "“Etasmiṁ te sulapite,",
  "ja480:3.2_0": "patirūpe subhāsite;",
  "ja480:3.3_0": "Varaṁ kassapa te dammi,",
  "ja480:3.4_0": "yaṁ kiñci manasicchasi”.",
  "ja480:4.1_0": "“Varañce me ado sakka,",
  "ja480:4.2_0": "sabbabhūtānamissara;",
  "ja480:4.3_0": "Yena putte ca dāre ca,",
  "ja480:4.4_0": "dhanadhaññaṁ piyāni ca;",
  "ja480:4.5_0": "Laddhā narā na tappanti,",
  "ja480:4.6_0": "so lobho na mayī vase”.",
  "ja480:5.1_0": "“Etasmiṁ te sulapite,",
  "ja480:5.2_0": "patirūpe subhāsite;",
  "ja480:5.3_0": "Varaṁ kassapa te dammi,",
  "ja480:5.4_0": "yaṁ kiñci manasicchasi”.",
  "ja480:6.1_0": "“Varañce me ado sakka,",
  "ja480:6.2_0": "sabbabhūtānamissara;",
  "ja480:6.3_0": "Khettaṁ vatthuṁ hiraññañca,",
  "ja480:6.4_0": "gavāssaṁ dāsaporisaṁ;",
  "ja480:6.5_0": "Yena jātena jīyanti,",
  "ja480:6.6_0": "so doso na mayī vase”.",
  "ja480:7.1_0": "“Etasmiṁ te sulapite,",
  "ja480:7.2_0": "patirūpe subhāsite;",
  "ja480:7.3_0": "Varaṁ kassapa te dammi,",
  "ja480:7.4_0": "yaṁ kiñci manasicchasi”.",
  "ja480:8.1_0": "“Varañce me ado sakka,",
  "ja480:8.2_0": "sabbabhūtānamissara;",
  "ja480:8.3_0": "Bālaṁ na passe na suṇe,",
  "ja480:8.4_0": "na ca bālena saṁvase;",
  "ja480:8.5_0": "Bālenallāpasallāpaṁ,",
  "ja480:8.6_0": "na kare na ca rocaye”.",
  "ja480:9.1_0": "“Kiṁ nu te akaraṁ bālo,",
  "ja480:9.2_0": "vada kassapa kāraṇaṁ;",
  "ja480:9.3_0": "Kena kassapa bālassa,",
  "ja480:9.4_0": "dassanaṁ nābhikaṅkhasi”.",
  "ja480:10.1_0": "“Anayaṁ nayati dummedho,",
  "ja480:10.2_0": "adhurāyaṁ niyuñjati;",
  "ja480:10.3_0": "Dunnayo seyyaso hoti,",
  "ja480:10.4_0": "sammā vutto pakuppati;",
  "ja480:10.5_0": "Vinayaṁ so na jānāti,",
  "ja480:10.6_0": "sādhu tassa adassanaṁ”.",
  "ja480:11.1_0": "“Etasmiṁ te sulapite,",
  "ja480:11.2_0": "patirūpe subhāsite;",
  "ja480:11.3_0": "Varaṁ kassapa te dammi,",
  "ja480:11.4_0": "yaṁ kiñci manasicchasi”.",
  "ja480:12.1_0": "“Varañce me ado sakka,",
  "ja480:12.2_0": "sabbabhūtānamissara;",
  "ja480:12.3_0": "Dhīraṁ passe suṇe dhīraṁ,",
  "ja480:12.4_0": "dhīrena saha saṁvase;",
  "ja480:12.5_0": "Dhīrenallāpasallāpaṁ,",
  "ja480:12.6_0": "taṁ kare tañca rocaye”.",
  "ja480:13.1_0": "“Kiṁ nu te akaraṁ dhīro,",
  "ja480:13.2_0": "vada kassapa kāraṇaṁ;",
  "ja480:13.3_0": "Kena kassapa dhīrassa,",
  "ja480:13.4_0": "dassanaṁ abhikaṅkhasi”.",
  "ja480:14.1_0": "“Nayaṁ nayati medhāvī,",
  "ja480:14.2_0": "adhurāyaṁ na yuñjati;",
  "ja480:14.3_0": "Sunayo seyyaso hoti,",
  "ja480:14.4_0": "sammā vutto na kuppati;",
  "ja480:14.5_0": "Vinayaṁ so pajānāti,",
  "ja480:14.6_0": "sādhu tena samāgamo”.",
  "ja480:15.1_0": "“Etasmiṁ te sulapite,",
  "ja480:15.2_0": "patirūpe subhāsite;",
  "ja480:15.3_0": "Varaṁ kassapa te dammi,",
  "ja480:15.4_0": "yaṁ kiñci manasicchasi”.",
  "ja480:16.1_0": "“Varañce me ado sakka,",
  "ja480:16.2_0": "sabbabhūtānamissara;",
  "ja480:16.3_0": "Tato ratyā vivasāne,",
  "ja480:16.4_0": "sūriyuggamanaṁ pati;",
  "ja480:16.5_0": "Dibbā bhakkhā pātubhaveyyuṁ,",
  "ja480:16.6_0": "sīlavanto ca yācakā.",
  "ja480:17.1_0": "Dadato me na khīyetha,",
  "ja480:17.2_0": "datvā nānutapeyyahaṁ;",
  "ja480:17.3_0": "Dadaṁ cittaṁ pasādeyyaṁ,",
  "ja480:17.4_0": "etaṁ sakka varaṁ vare”.",
  "ja480:18.1_0": "“Etasmiṁ te sulapite,",
  "ja480:18.2_0": "patirūpe subhāsite;",
  "ja480:18.3_0": "Varaṁ kassapa te dammi,",
  "ja480:18.4_0": "yaṁ kiñci manasicchasi”.",
  "ja480:19.1_0": "“Varañce me ado sakka,",
  "ja480:19.2_0": "sabbabhūtānamissara;",
  "ja480:19.3_0": "Na maṁ puna upeyyāsi,",
  "ja480:19.4_0": "etaṁ sakka varaṁ vare”.",
  "ja480:20.1_0": "“Bahūhi vatacariyāhi,",
  "ja480:20.2_0": "narā ca atha nāriyo;",
  "ja480:20.3_0": "Dassanaṁ abhikaṅkhanti,",
  "ja480:20.4_0": "kiṁ nu me dassane bhayaṁ”.",
  "ja480:21.1_0": "“Taṁ tādisaṁ devavaṇṇaṁ,",
  "ja480:21.2_0": "sabbakāmasamiddhinaṁ;",
  "ja480:21.3_0": "Disvā tapo pamajjeyyaṁ,",
  "ja480:21.4_0": "etaṁ te dassane bhayan”ti.",
  "ja480:22.1_0": "Akittijātakaṁ sattamaṁ."
}