{
  "tha-ap446:0.1_0": "Therāpadāna",
  "tha-ap446:0.2_0": "Vibhītakavagga",
  "tha-ap446:0.3_0": "4 Bhallātadāyakattheraapadāna",
  "tha-ap446:1.1_0": "“Suvaṇṇavaṇṇaṁ sambuddhaṁ,",
  "tha-ap446:1.2_0": "Dvattiṁsavaralakkhaṇaṁ;",
  "tha-ap446:1.3_0": "Vipinaggena gacchantaṁ,",
  "tha-ap446:1.4_0": "Sālarājaṁva phullitaṁ.",
  "tha-ap446:2.1_0": "Tiṇattharaṁ paññāpetvā,",
  "tha-ap446:2.2_0": "buddhaseṭṭhaṁ ayācahaṁ;",
  "tha-ap446:2.3_0": "‘Anukampatu maṁ buddho,",
  "tha-ap446:2.4_0": "bhikkhaṁ icchāmi dātave’.",
  "tha-ap446:3.1_0": "Anukampako kāruṇiko,",
  "tha-ap446:3.2_0": "atthadassī mahāyaso;",
  "tha-ap446:3.3_0": "Mama saṅkappamaññāya,",
  "tha-ap446:3.4_0": "orūhi mama assame.",
  "tha-ap446:4.1_0": "Orohitvāna sambuddho,",
  "tha-ap446:4.2_0": "nisīdi paṇṇasanthare;",
  "tha-ap446:4.3_0": "Bhallātakaṁ gahetvāna,",
  "tha-ap446:4.4_0": "buddhaseṭṭhassadāsahaṁ.",
  "tha-ap446:5.1_0": "Mama nijjhāyamānassa,",
  "tha-ap446:5.2_0": "paribhuñji tadā jino;",
  "tha-ap446:5.3_0": "Tattha cittaṁ pasādetvā,",
  "tha-ap446:5.4_0": "abhivandiṁ tadā jinaṁ.",
  "tha-ap446:6.1_0": "Aṭṭhārase kappasate,",
  "tha-ap446:6.2_0": "yaṁ phalamadadiṁ tadā;",
  "tha-ap446:6.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap446:6.4_0": "phaladānassidaṁ phalaṁ.",
  "tha-ap446:7.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap446:7.2_0": "…pe…",
  "tha-ap446:7.3_0": "viharāmi anāsavo.",
  "tha-ap446:8.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap446:8.2_0": "…pe…",
  "tha-ap446:8.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap446:9.1_0": "Paṭisambhidā catasso,",
  "tha-ap446:9.2_0": "…pe…",
  "tha-ap446:9.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap446:10.1_0": "Itthaṁ sudaṁ āyasmā bhallātadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap446:11.1_0": "Bhallātadāyakattherassāpadānaṁ catutthaṁ."
}