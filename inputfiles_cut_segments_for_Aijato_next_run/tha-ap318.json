{
  "tha-ap318:0.1_0": "Therāpadāna",
  "tha-ap318:0.2_0": "Ārakkhadāyakavagga",
  "tha-ap318:0.3_0": "6 Āsanasanthavikattheraapadāna",
  "tha-ap318:1.1_0": "“Cetiyaṁ uttamaṁ nāma,",
  "tha-ap318:1.2_0": "sikhino lokabandhuno;",
  "tha-ap318:1.3_0": "Araññe irīṇe vane,",
  "tha-ap318:1.4_0": "andhāhiṇḍāmahaṁ tadā.",
  "tha-ap318:2.1_0": "Pavanā nikkhamantena,",
  "tha-ap318:2.2_0": "diṭṭhaṁ sīhāsanaṁ mayā;",
  "tha-ap318:2.3_0": "Ekaṁsaṁ añjaliṁ katvā,",
  "tha-ap318:2.4_0": "santhaviṁ lokanāyakaṁ.",
  "tha-ap318:3.1_0": "Divasabhāgaṁ thavitvāna,",
  "tha-ap318:3.2_0": "buddhaṁ lokagganāyakaṁ;",
  "tha-ap318:3.3_0": "Haṭṭho haṭṭhena cittena,",
  "tha-ap318:3.4_0": "imaṁ vācaṁ udīrayiṁ.",
  "tha-ap318:4.1_0": "‘Namo te purisājañña,",
  "tha-ap318:4.2_0": "namo te purisuttama;",
  "tha-ap318:4.3_0": "Sabbaññūsi mahāvīra,",
  "tha-ap318:4.4_0": "lokajeṭṭha narāsabha’.",
  "tha-ap318:5.1_0": "Abhitthavitvā sikhinaṁ,",
  "tha-ap318:5.2_0": "nimittakaraṇenahaṁ;",
  "tha-ap318:5.3_0": "Āsanaṁ abhivādetvā,",
  "tha-ap318:5.4_0": "pakkāmiṁ uttarāmukho.",
  "tha-ap318:6.1_0": "Ekattiṁse ito kappe,",
  "tha-ap318:6.2_0": "yaṁ thaviṁ vadataṁ varaṁ;",
  "tha-ap318:6.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap318:6.4_0": "thomanāya idaṁ phalaṁ.",
  "tha-ap318:7.1_0": "Sattavīse ito kappe,",
  "tha-ap318:7.2_0": "atulā satta āsu te;",
  "tha-ap318:7.3_0": "Sattaratanasampannā,",
  "tha-ap318:7.4_0": "cakkavattī mahabbalā.",
  "tha-ap318:8.1_0": "Paṭisambhidā catasso,",
  "tha-ap318:8.2_0": "…pe…",
  "tha-ap318:8.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap318:9.1_0": "Itthaṁ sudaṁ āyasmā āsanasanthaviko thero imā gāthāyo abhāsitthāti.",
  "tha-ap318:10.1_0": "Āsanasanthavikattherassāpadānaṁ chaṭṭhaṁ."
}