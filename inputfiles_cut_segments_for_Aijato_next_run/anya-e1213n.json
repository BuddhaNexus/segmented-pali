{
  "anya-e1213n:0_0": "Saddabindu pakaraṇaṁ",
  "anya-e1213n:1_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e1213n:2_0": "1.",
  "anya-e1213n:3_0": "Yassañeyyesu dhammesu, nāṇumattampaveditaṁ,",
  "anya-e1213n:4_0": "Natvāsaddhammasaṅghaṁtaṁ, saddabinduṁsamārabhe;",
  "anya-e1213n:5_0": "2.",
  "anya-e1213n:6_0": "Kādiritā navasaṅkhyā, kamenaṭā di yādica,",
  "anya-e1213n:7_0": "Pādayopañca saṅkhyātā, suññanāmā saraññanā;",
  "anya-e1213n:8_0": "3.",
  "anya-e1213n:9_0": "Sarehevasarāpubbe luttāvāvīpareramā,",
  "anya-e1213n:10_0": "Byañjanācāgamāvāvī dīgharassādisambhavā;",
  "anya-e1213n:11_0": "4.",
  "anya-e1213n:12_0": "Kākāsenāgatosisa keniddhimaccadassayi,",
  "anya-e1213n:13_0": "Arājakhvaggimesīnaṁ sotukammeghayitthiyo;",
  "anya-e1213n:14_0": "Iti sandhikappo samatto.",
  "anya-e1213n:15_0": "5.",
  "anya-e1213n:16_0": "Buddhapumayuvasanta rājabrahmasakhācasā,",
  "anya-e1213n:17_0": "Yatādidehījantuca satthupitābhibhūvidū;",
  "anya-e1213n:18_0": "6.",
  "anya-e1213n:19_0": "Kaññāmmārattithipo, kkharaṇīnadirumātubhū,",
  "anya-e1213n:20_0": "Napuṁsaketiyantāca, padakammadadhāyuno;",
  "anya-e1213n:21_0": "7.",
  "anya-e1213n:22_0": "Gahitāgahaṇenettha suddhosyādyantakāpume,",
  "anya-e1213n:23_0": "Vimalāhontijāntehi thyaṁpañcantehidādhikā;",
  "anya-e1213n:24_0": "8.",
  "anya-e1213n:25_0": "Napuṁsakepayogātu janakāhontityantato,",
  "anya-e1213n:26_0": "Padhānānugatāsabba nāmasamāsataddhitā;",
  "anya-e1213n:27_0": "9.",
  "anya-e1213n:28_0": "Attiliṅgānipātādi tatoluttāvasyādayo,",
  "anya-e1213n:29_0": "Suttānurūpatosiddhā hontivattāmanādayo;",
  "anya-e1213n:30_0": "Iti nāmakappo samatto.",
  "anya-e1213n:31_0": "10.",
  "anya-e1213n:32_0": "Chakārakesasāmismiṁ samāsohotisambhavā,",
  "anya-e1213n:33_0": "Taddhītākattukammasa, mpadānokāsasāmisu;",
  "anya-e1213n:34_0": "11.",
  "anya-e1213n:35_0": "Sādhattayamhiākhyāto kitakosattasādhane,",
  "anya-e1213n:36_0": "Sabbatthapaṭhamāvutte avuttedutiyādayo;",
  "anya-e1213n:37_0": "12.",
  "anya-e1213n:38_0": "Manasāmuninovutyā vanebuddhenavaṇṇite,",
  "anya-e1213n:39_0": "Vaṭṭāhitovivaṭṭatthaṁ bhikkhubhāvetibhāvanaṁ;",
  "anya-e1213n:40_0": "Iti kārakakappo samatto.",
  "anya-e1213n:41_0": "13.",
  "anya-e1213n:42_0": "Rāsīdvipadikādvandā liṅgenavacanenaca,",
  "anya-e1213n:43_0": "Luttātulyādhikaraṇā bahubbīhītukhemarū;",
  "anya-e1213n:44_0": "14.",
  "anya-e1213n:45_0": "Tappurisācakhemorā dayācakammadhārayā,",
  "anya-e1213n:46_0": "Digavocāvyayāhārā etesabbepihāritā;",
  "anya-e1213n:47_0": "Iti samāsakappo samatto.",
  "anya-e1213n:48_0": "15.",
  "anya-e1213n:49_0": "Kaccāditopiekamhā saddatoniyamaṁvinā,",
  "anya-e1213n:50_0": "Nekatthesatibhonteva sabbetaddhitapaccayā;",
  "anya-e1213n:51_0": "Iti taddhitakappo samatto.",
  "anya-e1213n:52_0": "16.",
  "anya-e1213n:53_0": "Kattarināññathākamme tathābhāvetumerayā,",
  "anya-e1213n:54_0": "Sabbetepacadhātumhi saṅkhepenamarūmayā;",
  "anya-e1213n:55_0": "17.",
  "anya-e1213n:56_0": "Gamīmhātiguṇāphatto sambhavāaññadhātusu,",
  "anya-e1213n:57_0": "Anantāvapayogāte ādesapaccayādihi;",
  "anya-e1213n:58_0": "Iti ākhyātakappo samatto.",
  "anya-e1213n:59_0": "18.",
  "anya-e1213n:60_0": "Kitādipaccayāsabbe, ekamhāapidhātuto,",
  "anya-e1213n:61_0": "Siyuṁnurūpatosatta, sādhanesatipāyato;",
  "anya-e1213n:62_0": "Iti kitakappo samatto.",
  "anya-e1213n:63_0": "19.",
  "anya-e1213n:64_0": "Iminākiñcilesena, sakkāñātuṁjināgame,",
  "anya-e1213n:65_0": "Payogāñāṇināsindhu, rasovekenabindunā;",
  "anya-e1213n:66_0": "20.",
  "anya-e1213n:67_0": "Rammaṁsīghappavesāya, puraṁpiṭakasaññitaṁ,",
  "anya-e1213n:68_0": "Maggojumaggataṁmaggaṁ, saddāraññevisodhito;",
  "anya-e1213n:69_0": "21.",
  "anya-e1213n:70_0": "Teneva kiñci jalito jalito padīpo",
  "anya-e1213n:71_0": "Kaccāyanuttiratano citagabbhakoṇe,",
  "anya-e1213n:72_0": "Dhammādirājagurunā garumāmakena",
  "anya-e1213n:73_0": "Dhammena yobbipatinā sagaruttanīto;",
  "anya-e1213n:74_0": "Iti saddabindu pakaraṇaṁ parisamattaṁ.",
  "anya-e1213n:75_0": "Yosaññamo guṇadhano nayanaṁ nijaṁva",
  "anya-e1213n:76_0": "Sikkhāpayī mama mavaṁ sugatāgamādo,",
  "anya-e1213n:77_0": "Salloka puñja suhado padumādi rāma",
  "anya-e1213n:78_0": "Nāmo mahā yativarā cariyo samayhaṁ;",
  "anya-e1213n:79_0": "Saddhādhanena vasatā viditamhi pupphā",
  "anya-e1213n:80_0": "Rāmedhunā ariyavaṁsa dhajavhayena,",
  "anya-e1213n:81_0": "Santena ñāṇatilako tyaparākhyakena",
  "anya-e1213n:82_0": "Bālānametamavidhīyi mayāhitāya;"
}