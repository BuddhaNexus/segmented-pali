{
  "tha-ap280:0.1_0": "Therāpadāna",
  "tha-ap280:0.2_0": "Suvaṇṇabibbohanavagga",
  "tha-ap280:0.3_0": "8. Āluvadāyakattheraapadāna",
  "tha-ap280:1.1_0": "“Pabbate himavantamhi,",
  "tha-ap280:1.2_0": "mahāsindhu sudassanā;",
  "tha-ap280:1.3_0": "Tatthaddasaṁ vītarāgaṁ,",
  "tha-ap280:1.4_0": "suppabhāsaṁ sudassanaṁ.",
  "tha-ap280:2.1_0": "Paramopasame yuttaṁ,",
  "tha-ap280:2.2_0": "disvā vimhitamānaso;",
  "tha-ap280:2.3_0": "Āluvaṁ tassa pādāsiṁ,",
  "tha-ap280:2.4_0": "pasanno sehi pāṇibhi.",
  "tha-ap280:3.1_0": "Ekattiṁse ito kappe,",
  "tha-ap280:3.2_0": "yaṁ phalamadadiṁ tadā;",
  "tha-ap280:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap280:3.4_0": "āluvassa idaṁ phalaṁ.",
  "tha-ap280:4.1_0": "Paṭisambhidā catasso,",
  "tha-ap280:4.2_0": "…pe…",
  "tha-ap280:4.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap280:5.1_0": "Itthaṁ sudaṁ āyasmā āluvadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap280:6.1_0": "Āluvadāyakattherassāpadānaṁ aṭṭhamaṁ."
}