{
  "pv31:0.1_0": "Petavatthu",
  "pv31:0.2_0": "Cūḷavagga",
  "pv31:0.3_0": "6. Seriṇīpetivatthu",
  "pv31:1.1_0": "“Naggā dubbaṇṇarūpāsi,",
  "pv31:1.2_0": "kisā dhamanisanthatā;",
  "pv31:1.3_0": "Upphāsulike kisike,",
  "pv31:1.4_0": "kā nu tvaṁ idha tiṭṭhasī”ti.",
  "pv31:2.1_0": "“Ahaṁ bhadante petīmhi,",
  "pv31:2.2_0": "duggatā yamalokikā;",
  "pv31:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv31:2.4_0": "petalokaṁ ito gatā”ti.",
  "pv31:3.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv31:3.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv31:3.3_0": "Kissa kammavipākena,",
  "pv31:3.4_0": "petalokaṁ ito gatā”ti.",
  "pv31:4.1_0": "“Anāvaṭesu titthesu,",
  "pv31:4.2_0": "viciniṁ aḍḍhamāsakaṁ;",
  "pv31:4.3_0": "Santesu deyyadhammesu,",
  "pv31:4.4_0": "dīpaṁ nākāsimattano.",
  "pv31:5.1_0": "Nadiṁ upemi tasitā,",
  "pv31:5.2_0": "rittakā parivattati;",
  "pv31:5.3_0": "Chāyaṁ upemi uṇhesu,",
  "pv31:5.4_0": "ātapo parivattati.",
  "pv31:6.1_0": "Aggivaṇṇo ca me vāto,",
  "pv31:6.2_0": "ḍahanto upavāyati;",
  "pv31:6.3_0": "Etañca bhante arahāmi,",
  "pv31:6.4_0": "aññañca pāpakaṁ tato.",
  "pv31:7.1_0": "Gantvāna hatthiniṁ puraṁ,",
  "pv31:7.2_0": "vajjesi mayha mātaraṁ;",
  "pv31:7.3_0": "‘Dhītā ca te mayā diṭṭhā,",
  "pv31:7.4_0": "duggatā yamalokikā;",
  "pv31:7.5_0": "Pāpakammaṁ karitvāna,",
  "pv31:7.6_0": "petalokaṁ ito gatā’.",
  "pv31:8.1_0": "Atthi me ettha nikkhittaṁ,",
  "pv31:8.2_0": "anakkhātañca taṁ mayā;",
  "pv31:8.3_0": "Cattārisatasahassāni,",
  "pv31:8.4_0": "pallaṅkassa ca heṭṭhato.",
  "pv31:9.1_0": "Tato me dānaṁ dadatu,",
  "pv31:9.2_0": "tassā ca hotu jīvikā;",
  "pv31:9.3_0": "Dānaṁ datvā ca me mātā,",
  "pv31:9.4_0": "dakkhiṇaṁ anudicchatu;",
  "pv31:9.5_0": "Tadāhaṁ sukhitā hessaṁ,",
  "pv31:9.6_0": "sabbakāmasamiddhinī”ti.",
  "pv31:10.1_0": "“Sādhū”ti so paṭissutvā,",
  "pv31:10.2_0": "gantvāna hatthiniṁ puraṁ;",
  "pv31:10.3_0": "Avoca tassā mātaraṁ—",
  "pv31:11.1_0": "“Dhītā ca te mayā diṭṭhā,",
  "pv31:11.2_0": "duggatā yamalokikā;",
  "pv31:11.3_0": "Pāpakammaṁ karitvāna,",
  "pv31:11.4_0": "petalokaṁ ito gatā.",
  "pv31:12.1_0": "Sā maṁ tattha samādapesi, (…)",
  "pv31:12.2_0": "Vajjesi mayha mātaraṁ;",
  "pv31:12.3_0": "‘Dhītā ca te mayā diṭṭhā,",
  "pv31:12.4_0": "Duggatā yamalokikā;",
  "pv31:12.5_0": "Pāpakammaṁ karitvāna,",
  "pv31:12.6_0": "Petalokaṁ ito gatā.",
  "pv31:13.1_0": "Atthi ca me ettha nikkhittaṁ,",
  "pv31:13.2_0": "anakkhātañca taṁ mayā;",
  "pv31:13.3_0": "Cattārisatasahassāni,",
  "pv31:13.4_0": "pallaṅkassa ca heṭṭhato.",
  "pv31:14.1_0": "Tato me dānaṁ dadatu,",
  "pv31:14.2_0": "tassā ca hotu jīvikā;",
  "pv31:14.3_0": "Dānaṁ datvā ca me mātā,",
  "pv31:14.4_0": "dakkhiṇaṁ anudicchatu (…);",
  "pv31:14.5_0": "Tadāhaṁ sukhitā hessaṁ,",
  "pv31:14.6_0": "sabbakāmasamiddhinī’”ti.",
  "pv31:15.1_0": "Tato hi sā dānamadā,",
  "pv31:15.2_0": "tassā dakkhiṇamādisī;",
  "pv31:15.3_0": "Petī ca sukhitā āsi,",
  "pv31:15.4_0": "tassā cāsi sujīvikāti.",
  "pv31:16.1_0": "Seriṇīpetivatthu chaṭṭhaṁ."
}