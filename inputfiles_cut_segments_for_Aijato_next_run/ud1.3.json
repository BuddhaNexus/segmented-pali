{
  "ud1.3:0.1_0": "Udāna 1.3",
  "ud1.3:0.2_0": "Tatiyabodhisutta",
  "ud1.3:1.1_0": "Evaṁ me sutaṁ—",
  "ud1.3:1.2_0": "ekaṁ samayaṁ bhagavā uruvelāyaṁ viharati najjā nerañjarāya tīre bodhirukkhamūle paṭhamābhisambuddho.",
  "ud1.3:1.3_0": "Tena kho pana samayena bhagavā sattāhaṁ ekapallaṅkena nisinno hoti vimuttisukhapaṭisaṁvedī.",
  "ud1.3:1.4_0": "Atha kho bhagavā tassa sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā rattiyā pacchimaṁ yāmaṁ paṭiccasamuppādaṁ anulomapaṭilomaṁ sādhukaṁ manasākāsi:",
  "ud1.3:2.1_0": "“Iti imasmiṁ sati idaṁ hoti,",
  "ud1.3:2.2_0": "imassuppādā idaṁ uppajjati,",
  "ud1.3:2.3_0": "imasmiṁ asati idaṁ na hoti,",
  "ud1.3:2.4_0": "imassa nirodhā idaṁ nirujjhati;",
  "ud1.3:2.5_0": "yadidaṁ—",
  "ud1.3:2.6_0": "avijjāpaccayā saṅkhārā,",
  "ud1.3:2.7_0": "saṅkhārapaccayā viññāṇaṁ,",
  "ud1.3:2.8_0": "viññāṇapaccayā nāmarūpaṁ,",
  "ud1.3:2.9_0": "nāmarūpapaccayā saḷāyatanaṁ,",
  "ud1.3:2.10_0": "saḷāyatanapaccayā phasso,",
  "ud1.3:2.11_0": "phassapaccayā vedanā,",
  "ud1.3:2.12_0": "vedanāpaccayā taṇhā,",
  "ud1.3:2.13_0": "taṇhāpaccayā upādānaṁ,",
  "ud1.3:2.14_0": "upādānapaccayā bhavo,",
  "ud1.3:2.15_0": "bhavapaccayā jāti,",
  "ud1.3:2.16_0": "jātipaccayā jarāmaraṇaṁ sokaparidevadukkhadomanassupāyāsā sambhavanti.",
  "ud1.3:2.17_0": "Evametassa kevalassa dukkhakkhandhassa samudayo hoti.",
  "ud1.3:3.1_0": "Avijjāya tveva asesavirāganirodhā saṅkhāranirodho,",
  "ud1.3:3.2_0": "saṅkhāranirodhā viññāṇanirodho,",
  "ud1.3:3.3_0": "viññāṇanirodhā nāmarūpanirodho,",
  "ud1.3:3.4_0": "nāmarūpanirodhā saḷāyatananirodho,",
  "ud1.3:3.5_0": "saḷāyatananirodhā phassanirodho,",
  "ud1.3:3.6_0": "phassanirodhā vedanānirodho,",
  "ud1.3:3.7_0": "vedanānirodhā taṇhānirodho,",
  "ud1.3:3.8_0": "taṇhānirodhā upādānanirodho,",
  "ud1.3:3.9_0": "upādānanirodhā bhavanirodho,",
  "ud1.3:3.10_0": "bhavanirodhā jātinirodho,",
  "ud1.3:3.11_0": "jātinirodhā jarāmaraṇaṁ sokaparidevadukkhadomanassupāyāsā nirujjhanti.",
  "ud1.3:3.12_0": "Evametassa kevalassa dukkhakkhandhassa nirodho hotī”ti.",
  "ud1.3:4.1_0": "Atha kho bhagavā etamatthaṁ viditvā tāyaṁ velāyaṁ imaṁ udānaṁ udānesi:",
  "ud1.3:5.1_0": "“Yadā have pātubhavanti dhammā,",
  "ud1.3:5.2_0": "Ātāpino jhāyato brāhmaṇassa;",
  "ud1.3:5.3_0": "Vidhūpayaṁ tiṭṭhati mārasenaṁ,",
  "ud1.3:5.4_0": "Sūriyova obhāsayamantalikkhan”ti.",
  "ud1.3:5.5_0": "Tatiyaṁ."
}