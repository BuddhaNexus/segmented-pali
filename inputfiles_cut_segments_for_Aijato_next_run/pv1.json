{
  "pv1:0.1_0": "Petavatthu",
  "pv1:0.2_0": "Uragavagga",
  "pv1:0.3_0": "1. Khettūpamapetavatthu",
  "pv1:1.1_0": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
  "pv1:2.1_0": "“Khettūpamā arahanto,",
  "pv1:2.2_0": "dāyakā kassakūpamā;",
  "pv1:2.3_0": "Bījūpamaṁ deyyadhammaṁ,",
  "pv1:2.4_0": "etto nibbattate phalaṁ.",
  "pv1:3.1_0": "Etaṁ bījaṁ kasi khettaṁ,",
  "pv1:3.2_0": "petānaṁ dāyakassa ca;",
  "pv1:3.3_0": "Taṁ petā paribhuñjanti,",
  "pv1:3.4_0": "dātā puññena vaḍḍhati.",
  "pv1:4.1_0": "Idheva kusalaṁ katvā,",
  "pv1:4.2_0": "Pete ca paṭipūjiya;",
  "pv1:4.3_0": "Saggañca kamatiṭṭhānaṁ,",
  "pv1:4.4_0": "Kammaṁ katvāna bhaddakan”ti.",
  "pv1:5.1_0": "Khettūpamapetavatthu paṭhamaṁ."
}