{
  "ne3:0.1_0": "Netti",
  "ne3:0.2_0": "3. Niddesavāra",
  "ne3:1.1_0": "Tattha saṅkhepato netti kittitā.",
  "ne3:2.0_0": "3.1. Hārasaṅkhepa",
  "ne3:2.1_0": "Assādādīnavatā,",
  "ne3:2.2_0": "Nissaraṇampi ca phalaṁ upāyo ca;",
  "ne3:2.3_0": "Āṇattī ca bhagavato,",
  "ne3:2.4_0": "Yogīnaṁ **desanāhāro**.",
  "ne3:3.1_0": "Yaṁ pucchitañca vissajjitañca,",
  "ne3:3.2_0": "Suttassa yā ca anugīti;",
  "ne3:3.3_0": "Suttassa yo pavicayo,",
  "ne3:3.4_0": "Hāro **vicayo**ti niddiṭṭho.",
  "ne3:4.1_0": "Sabbesaṁ hārānaṁ,",
  "ne3:4.2_0": "Yā bhūmī yo ca gocaro tesaṁ;",
  "ne3:4.3_0": "Yuttāyuttaparikkhā,",
  "ne3:4.4_0": "Hāro **yuttī**ti niddiṭṭho.",
  "ne3:5.1_0": "Dhammaṁ deseti jino,",
  "ne3:5.2_0": "Tassa ca dhammassa yaṁ padaṭṭhānaṁ;",
  "ne3:5.3_0": "Iti yāva sabbadhammā,",
  "ne3:5.4_0": "Eso hāro **padaṭṭhāno**.",
  "ne3:6.1_0": "Vuttamhi ekadhamme,",
  "ne3:6.2_0": "Ye dhammā ekalakkhaṇā keci;",
  "ne3:6.3_0": "Vuttā bhavanti sabbe,",
  "ne3:6.4_0": "So hāro **lakkhaṇo** nāma.",
  "ne3:7.1_0": "Neruttamadhippāyo,",
  "ne3:7.2_0": "Byañjanamatha desanānidānañca;",
  "ne3:7.3_0": "Pubbāparānusandhī,",
  "ne3:7.4_0": "Eso hāro **catubyūho**.",
  "ne3:8.1_0": "Ekamhi padaṭṭhāne,",
  "ne3:8.2_0": "Pariyesati sesakaṁ padaṭṭhānaṁ;",
  "ne3:8.3_0": "Āvaṭṭati paṭipakkhe,",
  "ne3:8.4_0": "**Āvaṭṭo** nāma so hāro.",
  "ne3:9.1_0": "Dhammañca padaṭṭhānaṁ,",
  "ne3:9.2_0": "Bhūmiñca vibhajjate ayaṁ hāro;",
  "ne3:9.3_0": "Sādhāraṇe asādhā-",
  "ne3:9.4_0": "Raṇe ca neyyo **vibhattī**ti.",
  "ne3:10.1_0": "Kusalākusale dhamme,",
  "ne3:10.2_0": "Niddiṭṭhe bhāvite pahīne ca;",
  "ne3:10.3_0": "Parivattati paṭipakkhe,",
  "ne3:10.4_0": "Hāro **parivattano** nāma.",
  "ne3:11.1_0": "Vevacanāni bahūni tu,",
  "ne3:11.2_0": "Sutte vuttāni ekadhammassa;",
  "ne3:11.3_0": "Yo jānāti suttavidū,",
  "ne3:11.4_0": "**Vevacano** nāma so hāro.",
  "ne3:12.1_0": "Ekaṁ bhagavā dhammaṁ,",
  "ne3:12.2_0": "Paññattīhi vividhāhi deseti;",
  "ne3:12.3_0": "So ākāro ñeyyo,",
  "ne3:12.4_0": "**Paññattī** nāma hāroti.",
  "ne3:13.1_0": "Yo ca paṭiccuppādo,",
  "ne3:13.2_0": "Indriyakhandhā ca dhātu āyatanā;",
  "ne3:13.3_0": "Etehi otarati yo,",
  "ne3:13.4_0": "**Otaraṇo** nāma so hāro.",
  "ne3:14.1_0": "Vissajjitamhi pañhe,",
  "ne3:14.2_0": "Gāthāyaṁ pucchitā yamārabbha;",
  "ne3:14.3_0": "Suddhāsuddhaparikkhā,",
  "ne3:14.4_0": "Hāro so **sodhano** nāma.",
  "ne3:15.1_0": "Ekattatāya dhammā,",
  "ne3:15.2_0": "Yepi ca vemattatāya niddiṭṭhā;",
  "ne3:15.3_0": "Te na vikappayitabbā,",
  "ne3:15.4_0": "Eso hāro **adhiṭṭhāno**.",
  "ne3:16.1_0": "Ye dhammā yaṁ dhammaṁ,",
  "ne3:16.2_0": "Janayantippaccayā paramparato;",
  "ne3:16.3_0": "Hetumavakaḍḍhayitvā,",
  "ne3:16.4_0": "Eso hāro **parikkhāro**.",
  "ne3:17.1_0": "Ye dhammā yaṁmūlā,",
  "ne3:17.2_0": "Ye cekatthā pakāsitā muninā;",
  "ne3:17.3_0": "Te samaropayitabbā,",
  "ne3:17.4_0": "Esa **samāropano** hāro.",
  "ne3:18.0_0": "3.2. Nayasaṅkhepa",
  "ne3:18.1_0": "Taṇhañca avijjampi ca,",
  "ne3:18.2_0": "Samathena vipassanāya yo neti;",
  "ne3:18.3_0": "Saccehi yojayitvā,",
  "ne3:18.4_0": "Ayaṁ nayo **nandiyāvaṭṭo**.",
  "ne3:19.1_0": "Yo akusale samūlehi,",
  "ne3:19.2_0": "Neti kusale ca kusalamūlehi;",
  "ne3:19.3_0": "Bhūtaṁ tathaṁ avitathaṁ,",
  "ne3:19.4_0": "**Tipukkhalaṁ** taṁ nayaṁ āhu.",
  "ne3:20.1_0": "Yo neti vipallāsehi,",
  "ne3:20.2_0": "Kilese indriyehi saddhamme;",
  "ne3:20.3_0": "Etaṁ nayaṁ nayavidū,",
  "ne3:20.4_0": "**Sīhavikkīḷitaṁ** āhu.",
  "ne3:21.1_0": "Veyyākaraṇesu hi ye,",
  "ne3:21.2_0": "Kusalākusalā tahiṁ tahiṁ vuttā;",
  "ne3:21.3_0": "Manasā volokayate,",
  "ne3:21.4_0": "Taṁ khu **disālocanaṁ** āhu.",
  "ne3:22.1_0": "Oloketvā disalocanena,",
  "ne3:22.2_0": "Ukkhipiya yaṁ samāneti;",
  "ne3:22.3_0": "Sabbe kusalākusale,",
  "ne3:22.4_0": "Ayaṁ nayo **aṅkuso** nāma.",
  "ne3:23.1_0": "Soḷasa hārā paṭhamaṁ,",
  "ne3:23.2_0": "Disalocanato disā viloketvā;",
  "ne3:23.3_0": "Saṅkhipiya aṅkusena hi,",
  "ne3:23.4_0": "Nayehi tīhi niddise suttaṁ.",
  "ne3:24.0_0": "3.3. Dvādasapada",
  "ne3:24.1_0": "Akkharaṁ padaṁ byañjanaṁ,",
  "ne3:24.2_0": "nirutti tatheva niddeso;",
  "ne3:24.3_0": "Ākārachaṭṭhavacanaṁ,",
  "ne3:24.4_0": "ettāva byañjanaṁ sabbaṁ.",
  "ne3:25.1_0": "Saṅkāsanā pakāsanā,",
  "ne3:25.2_0": "Vivaraṇā vibhajanuttānīkammapaññatti;",
  "ne3:25.3_0": "Etehi chahi padehi,",
  "ne3:25.4_0": "Attho kammañca niddiṭṭhaṁ.",
  "ne3:26.1_0": "Tīṇi ca nayā anūnā,",
  "ne3:26.2_0": "Atthassa ca chappadāni gaṇitāni;",
  "ne3:26.3_0": "Navahi padehi bhagavato,",
  "ne3:26.4_0": "Vacanassattho samāyutto.",
  "ne3:27.1_0": "Atthassa navappadāni,",
  "ne3:27.2_0": "Byañjanapariyeṭṭhiyā catubbīsa;",
  "ne3:27.3_0": "Ubhayaṁ saṅkalayitvā,",
  "ne3:27.4_0": "Tettiṁsā ettikā nettīti.",
  "ne3:27.5_0": "Niddesavāro."
}