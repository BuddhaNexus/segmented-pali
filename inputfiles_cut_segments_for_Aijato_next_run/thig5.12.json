{
  "thig5.12:0.1_0": "Therīgāthā",
  "thig5.12:0.2_0": "Pañcakanipāta",
  "thig5.12:0.3_0": "12. Candātherīgāthā",
  "thig5.12:1.1_0": "“Duggatāhaṁ pure āsiṁ,",
  "thig5.12:1.2_0": "vidhavā ca aputtikā;",
  "thig5.12:1.3_0": "Vinā mittehi ñātīhi,",
  "thig5.12:1.4_0": "bhattacoḷassa nādhigaṁ.",
  "thig5.12:2.1_0": "Pattaṁ daṇḍañca gaṇhitvā,",
  "thig5.12:2.2_0": "bhikkhamānā kulā kulaṁ;",
  "thig5.12:2.3_0": "Sītuṇhena ca ḍayhantī,",
  "thig5.12:2.4_0": "satta vassāni cārihaṁ.",
  "thig5.12:3.1_0": "Bhikkhuniṁ puna disvāna,",
  "thig5.12:3.2_0": "annapānassa lābhiniṁ;",
  "thig5.12:3.3_0": "Upasaṅkamma avocaṁ,",
  "thig5.12:3.4_0": "‘pabbajjaṁ anagāriyaṁ’.",
  "thig5.12:4.1_0": "Sā ca maṁ anukampāya,",
  "thig5.12:4.2_0": "pabbājesi paṭācārā;",
  "thig5.12:4.3_0": "Tato maṁ ovaditvāna,",
  "thig5.12:4.4_0": "paramatthe niyojayi.",
  "thig5.12:5.1_0": "Tassāhaṁ vacanaṁ sutvā,",
  "thig5.12:5.2_0": "akāsiṁ anusāsaniṁ;",
  "thig5.12:5.3_0": "Amogho ayyāyovādo,",
  "thig5.12:5.4_0": "tevijjāmhi anāsavā”ti.",
  "thig5.12:6.1_0": "…",
  "thig5.12:6.2_0": "Candā therī ….",
  "thig5.12:7.1_0": "Pañcakanipāto niṭṭhito."
}