{
  "tha-ap204:0.1_0": "Therāpadāna",
  "tha-ap204:0.2_0": "Kaṇikārapupphiyavagga",
  "tha-ap204:0.3_0": "2. Minelapupphiyattheraapadāna",
  "tha-ap204:1.1_0": "“Suvaṇṇavaṇṇo bhagavā,",
  "tha-ap204:1.2_0": "sataraṁsī patāpavā;",
  "tha-ap204:1.3_0": "Caṅkamanaṁ samārūḷho,",
  "tha-ap204:1.4_0": "mettacitto sikhīsabho.",
  "tha-ap204:2.1_0": "Pasannacitto sumano,",
  "tha-ap204:2.2_0": "vanditvā ñāṇamuttamaṁ;",
  "tha-ap204:2.3_0": "Minelapupphaṁ paggayha,",
  "tha-ap204:2.4_0": "buddhassa abhiropayiṁ.",
  "tha-ap204:3.1_0": "Ekattiṁse ito kappe,",
  "tha-ap204:3.2_0": "yaṁ pupphamabhipūjayiṁ;",
  "tha-ap204:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap204:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap204:4.1_0": "Ekūnatiṁsakappamhi,",
  "tha-ap204:4.2_0": "sumeghaghananāmako;",
  "tha-ap204:4.3_0": "Sattaratanasampanno,",
  "tha-ap204:4.4_0": "cakkavattī mahabbalo.",
  "tha-ap204:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap204:5.2_0": "…pe…",
  "tha-ap204:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap204:6.1_0": "Itthaṁ sudaṁ āyasmā minelapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap204:7.1_0": "Minelapupphiyattherassāpadānaṁ dutiyaṁ."
}