{
  "thag15.2:0.1_0": "Theragāthā",
  "thag15.2:0.2_0": "Soḷasakanipāta",
  "thag15.2:0.3_0": "Paṭhamavagga",
  "thag15.2:0.4_0": "15.2. Udāyittheragāthā",
  "thag15.2:1.1_0": "“Manussabhūtaṁ sambuddhaṁ,",
  "thag15.2:1.2_0": "Attadantaṁ samāhitaṁ;",
  "thag15.2:1.3_0": "Iriyamānaṁ brahmapathe,",
  "thag15.2:1.4_0": "Cittassūpasame rataṁ.",
  "thag15.2:2.1_0": "Yaṁ manussā namassanti,",
  "thag15.2:2.2_0": "sabbadhammāna pāraguṁ;",
  "thag15.2:2.3_0": "Devāpi taṁ namassanti,",
  "thag15.2:2.4_0": "iti me arahato sutaṁ.",
  "thag15.2:3.1_0": "Sabbasaṁyojanātītaṁ,",
  "thag15.2:3.2_0": "vanā nibbanamāgataṁ;",
  "thag15.2:3.3_0": "Kāmehi nekkhammarataṁ,",
  "thag15.2:3.4_0": "muttaṁ selāva kañcanaṁ.",
  "thag15.2:4.1_0": "Sa ve accaruci nāgo,",
  "thag15.2:4.2_0": "himavāvaññe siluccaye;",
  "thag15.2:4.3_0": "Sabbesaṁ nāganāmānaṁ,",
  "thag15.2:4.4_0": "saccanāmo anuttaro.",
  "thag15.2:5.1_0": "Nāgaṁ vo kittayissāmi,",
  "thag15.2:5.2_0": "na hi āguṁ karoti so;",
  "thag15.2:5.3_0": "Soraccaṁ avihiṁsā ca,",
  "thag15.2:5.4_0": "pādā nāgassa te duve.",
  "thag15.2:6.1_0": "Sati ca sampajaññañca,",
  "thag15.2:6.2_0": "caraṇā nāgassa tepare;",
  "thag15.2:6.3_0": "Saddhāhattho mahānāgo,",
  "thag15.2:6.4_0": "upekkhāsetadantavā.",
  "thag15.2:7.1_0": "Sati gīvā siro paññā,",
  "thag15.2:7.2_0": "vīmaṁsā dhammacintanā;",
  "thag15.2:7.3_0": "Dhammakucchisamāvāso,",
  "thag15.2:7.4_0": "viveko tassa vāladhi.",
  "thag15.2:8.1_0": "So jhāyī assāsarato,",
  "thag15.2:8.2_0": "ajjhattaṁ susamāhito;",
  "thag15.2:8.3_0": "Gacchaṁ samāhito nāgo,",
  "thag15.2:8.4_0": "ṭhito nāgo samāhito.",
  "thag15.2:9.1_0": "Sayaṁ samāhito nāgo,",
  "thag15.2:9.2_0": "nisinnopi samāhito;",
  "thag15.2:9.3_0": "Sabbattha saṁvuto nāgo,",
  "thag15.2:9.4_0": "esā nāgassa sampadā.",
  "thag15.2:10.1_0": "Bhuñjati anavajjāni,",
  "thag15.2:10.2_0": "sāvajjāni na bhuñjati;",
  "thag15.2:10.3_0": "Ghāsamacchādanaṁ laddhā,",
  "thag15.2:10.4_0": "sannidhiṁ parivajjayaṁ.",
  "thag15.2:11.1_0": "Saṁyojanaṁ aṇuṁ thūlaṁ,",
  "thag15.2:11.2_0": "sabbaṁ chetvāna bandhanaṁ;",
  "thag15.2:11.3_0": "Yena yeneva gacchati,",
  "thag15.2:11.4_0": "anapekkhova gacchati.",
  "thag15.2:12.1_0": "Yathāpi udake jātaṁ,",
  "thag15.2:12.2_0": "puṇḍarīkaṁ pavaḍḍhati;",
  "thag15.2:12.3_0": "Nopalippati toyena,",
  "thag15.2:12.4_0": "sucigandhaṁ manoramaṁ.",
  "thag15.2:13.1_0": "Tatheva ca loke jāto,",
  "thag15.2:13.2_0": "buddho loke viharati;",
  "thag15.2:13.3_0": "Nopalippati lokena,",
  "thag15.2:13.4_0": "toyena padumaṁ yathā.",
  "thag15.2:14.1_0": "Mahāgini pajjalito,",
  "thag15.2:14.2_0": "anāhāropasammati;",
  "thag15.2:14.3_0": "Aṅgāresu ca santesu,",
  "thag15.2:14.4_0": "nibbutoti pavuccati.",
  "thag15.2:15.1_0": "Atthassāyaṁ viññāpanī,",
  "thag15.2:15.2_0": "upamā viññūhi desitā;",
  "thag15.2:15.3_0": "Viññissanti mahānāgā,",
  "thag15.2:15.4_0": "nāgaṁ nāgena desitaṁ.",
  "thag15.2:16.1_0": "Vītarāgo vītadoso,",
  "thag15.2:16.2_0": "Vītamoho anāsavo;",
  "thag15.2:16.3_0": "Sarīraṁ vijahaṁ nāgo,",
  "thag15.2:16.4_0": "Parinibbissatyanāsavo”ti.",
  "thag15.2:16.5_0": "…",
  "thag15.2:16.6_0": "Udāyī thero ….",
  "thag15.2:16.7_0": "Soḷasakanipāto niṭṭhito.",
  "thag15.2:17.0_0": "Tatruddānaṁ",
  "thag15.2:17.1_0": "Koṇḍañño ca udāyī ca,",
  "thag15.2:17.2_0": "therā dve te mahiddhikā;",
  "thag15.2:17.3_0": "Soḷasamhi nipātamhi,",
  "thag15.2:17.4_0": "gāthāyo dve ca tiṁsa cāti."
}