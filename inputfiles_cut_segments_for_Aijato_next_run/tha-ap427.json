{
  "tha-ap427:0.1_0": "Therāpadāna",
  "tha-ap427:0.2_0": "Sakiṁsammajjakavagga",
  "tha-ap427:0.3_0": "5. Koraṇḍapupphiyattheraapadāna",
  "tha-ap427:1.1_0": "“Vanakammiko pure āsiṁ,",
  "tha-ap427:1.2_0": "pitumātumatenahaṁ;",
  "tha-ap427:1.3_0": "Pasumārena jīvāmi,",
  "tha-ap427:1.4_0": "kusalaṁ me na vijjati.",
  "tha-ap427:2.1_0": "Mama āsayasāmantā,",
  "tha-ap427:2.2_0": "tisso lokagganāyako;",
  "tha-ap427:2.3_0": "Padāni tīṇi dassesi,",
  "tha-ap427:2.4_0": "anukampāya cakkhumā.",
  "tha-ap427:3.1_0": "Akkante ca pade disvā,",
  "tha-ap427:3.2_0": "tissanāmassa satthuno;",
  "tha-ap427:3.3_0": "Haṭṭho haṭṭhena cittena,",
  "tha-ap427:3.4_0": "pade cittaṁ pasādayiṁ.",
  "tha-ap427:4.1_0": "Koraṇḍaṁ pupphitaṁ disvā,",
  "tha-ap427:4.2_0": "pādapaṁ dharaṇīruhaṁ;",
  "tha-ap427:4.3_0": "Sakosakaṁ gahetvāna,",
  "tha-ap427:4.4_0": "padaseṭṭhamapūjayiṁ.",
  "tha-ap427:5.1_0": "Tena kammena sukatena,",
  "tha-ap427:5.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap427:5.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap427:5.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap427:6.1_0": "Yaṁ yaṁ yonupapajjāmi,",
  "tha-ap427:6.2_0": "devattaṁ atha mānusaṁ;",
  "tha-ap427:6.3_0": "Koraṇḍavaṇṇakoyeva,",
  "tha-ap427:6.4_0": "suppabhāso bhavāmahaṁ.",
  "tha-ap427:7.1_0": "Dvenavute ito kappe,",
  "tha-ap427:7.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap427:7.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap427:7.4_0": "padapūjāyidaṁ phalaṁ.",
  "tha-ap427:8.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap427:8.2_0": "…pe…",
  "tha-ap427:8.3_0": "viharāmi anāsavo.",
  "tha-ap427:9.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap427:9.2_0": "…pe…",
  "tha-ap427:9.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap427:10.1_0": "Paṭisambhidā catasso,",
  "tha-ap427:10.2_0": "…pe…",
  "tha-ap427:10.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap427:11.1_0": "Itthaṁ sudaṁ āyasmā koraṇḍapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap427:12.1_0": "Koraṇḍapupphiyattherassāpadānaṁ pañcamaṁ."
}