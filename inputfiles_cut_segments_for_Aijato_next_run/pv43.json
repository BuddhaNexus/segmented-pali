{
  "pv43:0.1_0": "Petavatthu",
  "pv43:0.2_0": "Mahāvagga",
  "pv43:0.3_0": "8. Gūthakhādakapetavatthu",
  "pv43:1.1_0": "“Gūthakūpato uggantvā,",
  "pv43:1.2_0": "ko nu dīno patiṭṭhasi;",
  "pv43:1.3_0": "Nissaṁsayaṁ pāpakammanto,",
  "pv43:1.4_0": "kiṁ nu saddahase tuvan”ti.",
  "pv43:2.1_0": "“Ahaṁ bhadante petomhi,",
  "pv43:2.2_0": "duggato yamalokiko;",
  "pv43:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv43:2.4_0": "petalokaṁ ito gato”.",
  "pv43:3.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv43:3.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv43:3.3_0": "Kissa kammavipākena,",
  "pv43:3.4_0": "idaṁ dukkhaṁ nigacchasī”ti.",
  "pv43:4.1_0": "“Ahu āvāsiko mayhaṁ,",
  "pv43:4.2_0": "issukī kulamaccharī;",
  "pv43:4.3_0": "Ajjhāsito mayhaṁ ghare,",
  "pv43:4.4_0": "kadariyo paribhāsako.",
  "pv43:5.1_0": "Tassāhaṁ vacanaṁ sutvā,",
  "pv43:5.2_0": "bhikkhavo paribhāsisaṁ;",
  "pv43:5.3_0": "Tassa kammavipākena,",
  "pv43:5.4_0": "petalokaṁ ito gato”ti.",
  "pv43:6.1_0": "“Amitto mittavaṇṇena,",
  "pv43:6.2_0": "yo te āsi kulūpako;",
  "pv43:6.3_0": "Kāyassa bhedā duppañño,",
  "pv43:6.4_0": "kiṁ nu pecca gatiṁ gato”ti.",
  "pv43:7.1_0": "“Tassevāhaṁ pāpakammassa,",
  "pv43:7.2_0": "sīse tiṭṭhāmi matthake;",
  "pv43:7.3_0": "So ca paravisayaṁ patto,",
  "pv43:7.4_0": "mameva paricārako.",
  "pv43:8.1_0": "Yaṁ bhadante hadantaññe,",
  "pv43:8.2_0": "etaṁ me hoti bhojanaṁ;",
  "pv43:8.3_0": "Ahañca kho yaṁ hadāmi,",
  "pv43:8.4_0": "etaṁ so upajīvatī”ti.",
  "pv43:9.1_0": "Gūthakhādakapetavatthu aṭṭhamaṁ."
}