{
  "anya-e0602n2:0_0": "Vāsamālinīkya",
  "anya-e0602n2:1_0": "Namo tassa bhagavato arahato sammāsambuddhassa",
  "anya-e0602n2:2_0": "1.",
  "anya-e0602n2:3_0": "Vuḍḍhopi jinānaṁ, buddhosi vijānaṁ;",
  "anya-e0602n2:4_0": "Pubboditi māhaṁ, kubbomi vimānaṁ.",
  "anya-e0602n2:5_0": "(Tanumajjhāgāthā)",
  "anya-e0602n2:6_0": "2.",
  "anya-e0602n2:7_0": "Mahāsamatakūlaṁ, narāpavarapūjaṁ;",
  "anya-e0602n2:8_0": "Jahā abhayapūraṁ, namā kanakarūpaṁ.",
  "anya-e0602n2:9_0": "(Kumāralalitāgāthā)",
  "anya-e0602n2:10_0": "3.",
  "anya-e0602n2:11_0": "Narāsabhasubuddhaṁ, pajāmatanuruttaṁ;",
  "anya-e0602n2:12_0": "Dayākaramuduttaṁ, namāma ha usukkaṁ.",
  "anya-e0602n2:13_0": "(Kumāralalitāgāthā)",
  "anya-e0602n2:14_0": "4.",
  "anya-e0602n2:15_0": "Hitaṁ vahasusīlo, pamodati sukhatte;",
  "anya-e0602n2:16_0": "Name tamapabuddhaṁ, jinaṁ gatasukhantaṁ.",
  "anya-e0602n2:17_0": "(Kumāralalitāgāthā)",
  "anya-e0602n2:18_0": "5.",
  "anya-e0602n2:19_0": "Bandhu ca santakileso, yo pitavaṇṇapabhāso;",
  "anya-e0602n2:20_0": "Gotamagottasuññato, tassa namo narasīho.",
  "anya-e0602n2:21_0": "(Citrapadāgāthā)",
  "anya-e0602n2:22_0": "6.",
  "anya-e0602n2:23_0": "Buddhaṁ suddhaṁ lokesītaṁ, ukkaṁ yuttaṁ yoge haṁ;",
  "anya-e0602n2:24_0": "Vantātītaṁ oghe sīdaṁ, vandāpīhaṁ sokehīhaṁ.",
  "anya-e0602n2:25_0": "(Vijjummālāgāthā)",
  "anya-e0602n2:26_0": "7.",
  "anya-e0602n2:27_0": "Bhogavatī yopakhamī, sītadayā lokasakhā;",
  "anya-e0602n2:28_0": "Dhātutaye kitti sa ve, dātu jaye-tassa ca me;",
  "anya-e0602n2:29_0": "(Māṇavakagāthā)",
  "anya-e0602n2:30_0": "8.",
  "anya-e0602n2:31_0": "Mānito lukho rutotha, sannibho subho sukho ca;",
  "anya-e0602n2:32_0": "Jānito dharo namo ca, tassa yo thuto guṇova.",
  "anya-e0602n2:33_0": "(Samānikāgāthā)",
  "anya-e0602n2:34_0": "9.",
  "anya-e0602n2:35_0": "Jayaṁ dhajaṁ pajāpuge, ṭhitaṁ lilaṁ mahāsukhe;",
  "anya-e0602n2:36_0": "Subhaṁ phuṭaṁ pabhaṁ name, hitaṁ sukhaṁ dadātu me.",
  "anya-e0602n2:37_0": "(Pamāṇikāgāthā)",
  "anya-e0602n2:38_0": "10.",
  "anya-e0602n2:39_0": "Puṇṇapuññajanitasubhaṁ, jātiñātithutiyaguṇaṁ;",
  "anya-e0602n2:40_0": "Bhedaveravimalajinaṁ, ñāṇapādacaraṇa-mahaṁ.",
  "anya-e0602n2:41_0": "(Halamukhīgāthā)",
  "anya-e0602n2:42_0": "11.",
  "anya-e0602n2:43_0": "Sati mati suci yo-bhāso, thuti muni sukhito kāyo;",
  "anya-e0602n2:44_0": "Manujapumasuto nātho, jayavara mu-sabho dāto.",
  "anya-e0602n2:45_0": "(Bhujagasusugāthā)",
  "anya-e0602n2:46_0": "12.",
  "anya-e0602n2:47_0": "Yo buddho pavaro lilo puge,",
  "anya-e0602n2:48_0": "Lokutto abhayo ṭhito sukhe;",
  "anya-e0602n2:49_0": "Uttiṇṇaṁ nisabhaṁ hitaṁ vahe,",
  "anya-e0602n2:50_0": "Monindaṁ vimalaṁ jinaṁ name.",
  "anya-e0602n2:51_0": "(Suddhavirājitagāthā)",
  "anya-e0602n2:52_0": "13.",
  "anya-e0602n2:53_0": "Devindaṁ varagaṇatherindaṁ,",
  "anya-e0602n2:54_0": "Niṭṭhānaṁ bhavajananibbānaṁ;",
  "anya-e0602n2:55_0": "Niddosaṁ raṇarajanipphoṭaṁ,",
  "anya-e0602n2:56_0": "Vande-haṁ subhamukhasoṇṇemaṁ.",
  "anya-e0602n2:57_0": "(Paṇavagāthā)",
  "anya-e0602n2:58_0": "14.",
  "anya-e0602n2:59_0": "Gotamagotte ketuva ñātaṁ,",
  "anya-e0602n2:60_0": "Lokajakhette meruva jātaṁ;",
  "anya-e0602n2:61_0": "Thandilajeṭṭhe bheditamāraṁ,",
  "anya-e0602n2:62_0": "Paṇḍitamajjhe medhiva bhāṇaṁ;",
  "anya-e0602n2:63_0": "Mantiya vande sevitanāthaṁ.",
  "anya-e0602n2:64_0": "(Rummavatīgāthā)",
  "anya-e0602n2:65_0": "15.",
  "anya-e0602n2:66_0": "Buddho sukko amitaguṇīso,",
  "anya-e0602n2:67_0": "Yutto mutto sasiva timīto;",
  "anya-e0602n2:68_0": "Khe yo tejo tapasiva akko,",
  "anya-e0602n2:69_0": "Phelo theto tava namakāro.",
  "anya-e0602n2:70_0": "(Mattāgāthā)",
  "anya-e0602n2:71_0": "16.",
  "anya-e0602n2:72_0": "Yo jitamāre ve aji sabbaṁ,",
  "anya-e0602n2:73_0": "Tho mitasāre he-dhitapattaṁ;",
  "anya-e0602n2:74_0": "Saṁsitapuṇṇo so nami tassa,",
  "anya-e0602n2:75_0": "Paṇḍitaphullo so matikassa.",
  "anya-e0602n2:76_0": "(Campakamālāgāthā)",
  "anya-e0602n2:77_0": "17.",
  "anya-e0602n2:78_0": "Kanakarūpa mūpameyyakaṁ,",
  "anya-e0602n2:79_0": "Pavarasūra pūjasevataṁ;",
  "anya-e0602n2:80_0": "Kamalabhūma dhūradesakaṁ,",
  "anya-e0602n2:81_0": "Naramarūpa rū name ta-haṁ.",
  "anya-e0602n2:82_0": "(Manoramāgāthā)",
  "anya-e0602n2:83_0": "18.",
  "anya-e0602n2:84_0": "Deve gate dvevārā gamāsi,",
  "anya-e0602n2:85_0": "Sele cale ye ñātā pacāyi;",
  "anya-e0602n2:86_0": "Uddhaṁ tale tevāsaṁ akāsi,",
  "anya-e0602n2:87_0": "Buddhaṁ mate esāhaṁ namāmi.",
  "anya-e0602n2:88_0": "(Ubbhāsakantagāthā)",
  "anya-e0602n2:89_0": "19.",
  "anya-e0602n2:90_0": "Ukke sunutaṁ puthukañca theraṁ,",
  "anya-e0602n2:91_0": "Vutte sukhumaṁ ujukaṁ tathetaṁ;",
  "anya-e0602n2:92_0": "Dibbe paṭimaṁ kiriyaṁ vadetaṁ,",
  "anya-e0602n2:93_0": "Iddhe mahitaṁ kathitaṁ namehaṁ.",
  "anya-e0602n2:94_0": "(Upaṭṭhitagāthā)",
  "anya-e0602n2:95_0": "20. Dibbassa pūre pavarehi gutto,",
  "anya-e0602n2:96_0": "Siddhattha bhūte nagarehi vuṭṭho;",
  "anya-e0602n2:97_0": "Saṅkassa pūre ma-gaṇehi buddho,",
  "anya-e0602n2:98_0": "Aññattha pūje paname ni kubbo.",
  "anya-e0602n2:99_0": "(Indavajirāgāthā)",
  "anya-e0602n2:100_0": "21.",
  "anya-e0602n2:101_0": "Subhaṁ thutaṁ yo rajataṁ balatthaṁ,",
  "anya-e0602n2:102_0": "Yugaṁ hutaṁ so kanakaṁ kamatthaṁ;",
  "anya-e0602n2:103_0": "Citaṁ ṭhitaṁ lohitakaṁ manāpaṁ,",
  "anya-e0602n2:104_0": "Lilaṁ itaṁ soraci taṁ namāhaṁ.",
  "anya-e0602n2:105_0": "(Upendavajirāgāthā)",
  "anya-e0602n2:106_0": "22.",
  "anya-e0602n2:107_0": "Pinitaṁ viṇaṁ sakhilaṁ yaji taṁ,",
  "anya-e0602n2:108_0": "Susukhaṁ dhujaṁ biluvaṁ niyutaṁ;",
  "anya-e0602n2:109_0": "Ṭhapiyaṁ simaṁ thunutaṁ puthulaṁ,",
  "anya-e0602n2:110_0": "Nami haṁ khiṇaṁ sukhumaṁ mudukaṁ.",
  "anya-e0602n2:111_0": "(Sumukhīgāthā)",
  "anya-e0602n2:112_0": "23.",
  "anya-e0602n2:113_0": "Sogati bodhayiṁ gāhiya pattaṁ,",
  "anya-e0602n2:114_0": "Otari sonami jānita atthaṁ;",
  "anya-e0602n2:115_0": "Bhūpati pūjayi sākiya vaṁsaṁ,",
  "anya-e0602n2:116_0": "Sūjadhi ūpadhi bhāsita dhammaṁ.",
  "anya-e0602n2:117_0": "(Dodhakagāthā)",
  "anya-e0602n2:118_0": "24.",
  "anya-e0602n2:119_0": "Cattāro-me yācite so pavutthe,",
  "anya-e0602n2:120_0": "Laddhā bhoge kāmite oghamutte;",
  "anya-e0602n2:121_0": "Kattā tose-taṁ name colayutte,",
  "anya-e0602n2:122_0": "Tatthā-loke taṁpate kho padukke.",
  "anya-e0602n2:123_0": "(Sālinīgāthā)",
  "anya-e0602n2:124_0": "25.",
  "anya-e0602n2:125_0": "Sattā-loko sarito yo dhajukkaṁ,",
  "anya-e0602n2:126_0": "Tatthā-gopo raciyo-noja-muddhaṁ;",
  "anya-e0602n2:127_0": "Bhaddā-soko-pacito-bho pabuddhaṁ,",
  "anya-e0602n2:128_0": "Saddhāyogo bhaji so-ho-namuccaṁ.",
  "anya-e0602n2:129_0": "(Vātompīgāthā)",
  "anya-e0602n2:130_0": "26.",
  "anya-e0602n2:131_0": "Ñātamarūnaṁ upari ṭhitānaṁ,",
  "anya-e0602n2:132_0": "Vālapasūkaṁ huvati jinānaṁ;",
  "anya-e0602n2:133_0": "Devasuyāmo jinamiti ñāto,",
  "anya-e0602n2:134_0": "Tena sukhā-bho vinami idā so.",
  "anya-e0602n2:135_0": "(Sirīgāthā)",
  "anya-e0602n2:136_0": "27.",
  "anya-e0602n2:137_0": "Puṇṇakena kusumena sevataṁ,",
  "anya-e0602n2:138_0": "Kuñjareva thunutena khe gataṁ;",
  "anya-e0602n2:139_0": "Sundarena nami tena me jayaṁ,",
  "anya-e0602n2:140_0": "Puññatejakari-dhesa ve dadaṁ.",
  "anya-e0602n2:141_0": "(Rathoddhatāgāthā)",
  "anya-e0602n2:142_0": "28.",
  "anya-e0602n2:143_0": "Mātu āyu khiṇu-ke iha pubbe,",
  "anya-e0602n2:144_0": "Tāsu sādhu visute-disakucce;",
  "anya-e0602n2:145_0": "Vāta tāla khaciteni-dha soṇṇe,",
  "anya-e0602n2:146_0": "“Tāta tāta” yaji te-tisa vande.",
  "anya-e0602n2:147_0": "(Svāgatagāthā)",
  "anya-e0602n2:148_0": "29.",
  "anya-e0602n2:149_0": "Upari kamalayoni sobhitaṁ,",
  "anya-e0602n2:150_0": "Juhati dhavalajoti-dositaṁ;",
  "anya-e0602n2:151_0": "Sukari ya-matabodhi-mocitaṁ,",
  "anya-e0602n2:152_0": "Sunami caraṇaloki-dho-rimaṁ.",
  "anya-e0602n2:153_0": "(Bhaddikāgāthā)",
  "anya-e0602n2:154_0": "30.",
  "anya-e0602n2:155_0": "Vane jino yo vinayaṁ supekkhi-maṁ,",
  "anya-e0602n2:156_0": "Mate ṭhito-bho dijakaṁ dubajjitaṁ;",
  "anya-e0602n2:157_0": "Aghe-nidho khobhi-taraṁ mune-cchi-daṁ,",
  "anya-e0602n2:158_0": "Name-bhito bodhimahaṁ lukha-jjhitaṁ.",
  "anya-e0602n2:159_0": "(Vaṁsaṭṭhagāthā)",
  "anya-e0602n2:160_0": "31.",
  "anya-e0602n2:161_0": "Yo jāti-domānī-mupāsi lambi taṁ,",
  "anya-e0602n2:162_0": "Kodhehi lokehi dubhāsi paṇḍitaṁ;",
  "anya-e0602n2:163_0": "Pūrepi mūlepi pahāsi diṭṭhikaṁ,",
  "anya-e0602n2:164_0": "Sabbehi pattehi namāmi icchitaṁ.",
  "anya-e0602n2:165_0": "(Indavaṁsāgāthā)",
  "anya-e0602n2:166_0": "32.",
  "anya-e0602n2:167_0": "Verañjake pūravare vibhūsite,",
  "anya-e0602n2:168_0": "Nelañjane dūmavane vikūjite;",
  "anya-e0602n2:169_0": "Khemaṅkare thūlatare vidū site,",
  "anya-e0602n2:170_0": "Eta-ṅgame pūna name virūpi ve.",
  "anya-e0602n2:171_0": "(Indavaṁsāgāthā)",
  "anya-e0602n2:172_0": "33.",
  "anya-e0602n2:173_0": "Adhunāpi sa sārisuto nimalaṁ,",
  "anya-e0602n2:174_0": "Tamupāsi matāpi kuto ci nayaṁ;",
  "anya-e0602n2:175_0": "Karuṇāyi dha yāci budho vinayaṁ,",
  "anya-e0602n2:176_0": "Garukāpi namāmi su-yo jita-haṁ.",
  "anya-e0602n2:177_0": "(Toṭakagāthā)",
  "anya-e0602n2:178_0": "34.",
  "anya-e0602n2:179_0": "Janavaro muni so sarito vane,",
  "anya-e0602n2:180_0": "Vasabhato udito-pari gotame;",
  "anya-e0602n2:181_0": "Gamanaso guṇiko gami-to name,",
  "anya-e0602n2:182_0": "Nagara-do juti-mo ghatito-sathe.",
  "anya-e0602n2:183_0": "(Dutavilambitagāthā)",
  "anya-e0602n2:184_0": "35.",
  "anya-e0602n2:185_0": "Bhagavati kuṭigāre yo nisinne,",
  "anya-e0602n2:186_0": "Dhanavati suvisāle-ko isinde;",
  "anya-e0602n2:187_0": "Ya-malabhi muni lābhe molichinne,",
  "anya-e0602n2:188_0": "Sa panami juti-māse-to kilinne.",
  "anya-e0602n2:189_0": "(Puṭagāthā)",
  "anya-e0602n2:190_0": "36.",
  "anya-e0602n2:191_0": "Paṭhapita-miccassa sidatu sabbaṁ,",
  "anya-e0602n2:192_0": "Paṭhami-dha sikkhassa hitasukhatthaṁ;",
  "anya-e0602n2:193_0": "Pavadiya giddhassa khiṇalukhatthaṁ,",
  "anya-e0602n2:194_0": "Panami ca kiccassa sikhamukappaṁ.",
  "anya-e0602n2:195_0": "(Kusumavicittāgāthā)",
  "anya-e0602n2:196_0": "37.",
  "anya-e0602n2:197_0": "Nilobhāsi dhūmehi yu-cco vilāse,",
  "anya-e0602n2:198_0": "Ṭhito cā-bhi bhū tehi rukkho-digāhe;",
  "anya-e0602n2:199_0": "Yi-to tāni pūrepi luddho dvivāre,",
  "anya-e0602n2:200_0": "Jino-kāsi pūjemi buddho hitā-se.",
  "anya-e0602n2:201_0": "(Bhujaṅgappayātagāthā)",
  "anya-e0602n2:202_0": "38.",
  "anya-e0602n2:203_0": "Janarame dasasare visālake,",
  "anya-e0602n2:204_0": "Munivare kuṭighare-riyāpathe;",
  "anya-e0602n2:205_0": "Dhutatare-subhakathe caji sa ve,",
  "anya-e0602n2:206_0": "Tatiyake-ta-midha ve ṭhapi name.",
  "anya-e0602n2:207_0": "(Piyaṁvadāgāthā)",
  "anya-e0602n2:208_0": "39.",
  "anya-e0602n2:209_0": "Vesālike tu vasi kātu cātukaṁ,",
  "anya-e0602n2:210_0": "Te ñāhi tesu labhi-dhā-mukā-mukaṁ;",
  "anya-e0602n2:211_0": "Negāmikesu bhaji phāsu sā-yukaṁ,",
  "anya-e0602n2:212_0": "Etā-dhikesu nami-kāsu-dā-tulaṁ.",
  "anya-e0602n2:213_0": "(Lalitāgāthā)",
  "anya-e0602n2:214_0": "40.",
  "anya-e0602n2:215_0": "Vadi suppiyo duvacanaṁ tamato,",
  "anya-e0602n2:216_0": "Sahi muttiko guṇakathaṁ tathato;",
  "anya-e0602n2:217_0": "Gami māṇavo durapathaṁ carato,",
  "anya-e0602n2:218_0": "Nami sādhavo budhavaraṁ paraso.",
  "anya-e0602n2:219_0": "(Pamitakkharāgāthā)",
  "anya-e0602n2:220_0": "41.",
  "anya-e0602n2:221_0": "Yu-pagami vimalo sakhilo tadā,",
  "anya-e0602n2:222_0": "Yuvavati-pivano rami yo brahmā;",
  "anya-e0602n2:223_0": "Ekasayi ṭhitato kathi kho guṇe,",
  "anya-e0602n2:224_0": "Esa nami jina-mo padhi-do-juke.",
  "anya-e0602n2:225_0": "(Ujjalāgāthā)",
  "anya-e0602n2:226_0": "42.",
  "anya-e0602n2:227_0": "Jānaṁ sabbesaṁ desi yo kho-dhimuttaṁ,",
  "anya-e0602n2:228_0": "Ānandattheraṁ vedito coḷisuttaṁ;",
  "anya-e0602n2:229_0": "Kāyassammukhe kātuno-lokiyaṁ-se,",
  "anya-e0602n2:230_0": "Ṭhāna-ssa-ppuge kāruṇo hoti vande.",
  "anya-e0602n2:231_0": "(Vessadevī gāthā)",
  "anya-e0602n2:232_0": "43.",
  "anya-e0602n2:233_0": "Sukathiya majjhimasīla-maparaṁ,",
  "anya-e0602n2:234_0": "Yu-pacita-metthi-dha cīra-manayaṁ;",
  "anya-e0602n2:235_0": "Budhayi ca bhajjita-mīṇavataraṁ,",
  "anya-e0602n2:236_0": "Sunami pavajjita-mīha-mamalaṁ.",
  "anya-e0602n2:237_0": "(Tāmarasagāthā)",
  "anya-e0602n2:238_0": "44.",
  "anya-e0602n2:239_0": "Mahakañhi sīlampi abhāsi kante,",
  "anya-e0602n2:240_0": "Brahmathandilī mamhi manāpi ramme;",
  "anya-e0602n2:241_0": "Calakampi gīrampi kadāci ambe,",
  "anya-e0602n2:242_0": "Varapaṇḍi khīṇampi namāmi taṁ ve.",
  "anya-e0602n2:243_0": "(Kamalāgāthā)",
  "anya-e0602n2:244_0": "45.",
  "anya-e0602n2:245_0": "Mohante jini paṭhame jaye jitāyaṁ,",
  "anya-e0602n2:246_0": "Soramme isipatane vane nivāsaṁ.",
  "anya-e0602n2:247_0": "Khobhante kiri sakale vade vilāsaṁ,",
  "anya-e0602n2:248_0": "Ghoraṁve vinidamane name jinā-haṁ.",
  "anya-e0602n2:249_0": "(Pahāsinīgāthā)",
  "anya-e0602n2:250_0": "46.",
  "anya-e0602n2:251_0": "Divārakaṁ bajanagaraṁ phitaṁ vase,",
  "anya-e0602n2:252_0": "Nisāya taṁ janagaṇanaṁ ṭhitaṁ mate;",
  "anya-e0602n2:253_0": "Vijānakaṁ tamajaṭakaṁ sitaṁ vane,",
  "anya-e0602n2:254_0": "Hitāvahaṁ narapavaraṁ imaṁ name.",
  "anya-e0602n2:255_0": "(Ruciragāthā)",
  "anya-e0602n2:256_0": "47.",
  "anya-e0602n2:257_0": "Racita-maviralaṁ manussa mathā paṇaṁ,",
  "anya-e0602n2:258_0": "Pasiya tatiyakaṁ catuttha makā sayaṁ;",
  "anya-e0602n2:259_0": "Karita-madhikataṁ akhubbhamalā sabhaṁ,",
  "anya-e0602n2:260_0": "Jahitagatiparaṁ panujja namāma-haṁ.",
  "anya-e0602n2:261_0": "(Parājitāgāthā)",
  "anya-e0602n2:262_0": "48.",
  "anya-e0602n2:263_0": "Nagara-majaya-mesa nivasi tha pare,",
  "anya-e0602n2:264_0": "Mahati sa maṇike sakuṇakujavane;",
  "anya-e0602n2:265_0": "Yapati vasati ve hitasivavahane,",
  "anya-e0602n2:266_0": "Surata mubhayame-sita mima paname.",
  "anya-e0602n2:267_0": "(Paharaṇakalikāgāthā)",
  "anya-e0602n2:268_0": "49.",
  "anya-e0602n2:269_0": "Chaṭṭhaṁ vase athu-da tattha vane mune saṁ,",
  "anya-e0602n2:270_0": "Sabbaṁ dhare makulapabbatake upedaṁ;",
  "anya-e0602n2:271_0": "Cattaṁ male manuja matthavase sudesaṁ,",
  "anya-e0602n2:272_0": "Bhattaṁ name lahuka mappa mare dhune taṁ.",
  "anya-e0602n2:273_0": "(Vasantatilakagāthā)",
  "anya-e0602n2:274_0": "50.",
  "anya-e0602n2:275_0": "Nuna upavasati idha tha puna parime,",
  "anya-e0602n2:276_0": "Sukhaguṇamahati tidasapura ajite;",
  "anya-e0602n2:277_0": "Yuganuta mavadi vitatha mughatari ve,",
  "anya-e0602n2:278_0": "Hutathuna manami simada tula mariye.",
  "anya-e0602n2:279_0": "(Sasikalāgāthā)",
  "anya-e0602n2:280_0": "51.",
  "anya-e0602n2:281_0": "Jinapati susumāraṁ bhesakallāvane-saṁ,",
  "anya-e0602n2:282_0": "Nivasati puthuñāṇaṁ khve-sa nandālaye-taṁ;",
  "anya-e0602n2:283_0": "Vimala-mi dhu-jukāyaṁ bhedasantāpa-sesaṁ,",
  "anya-e0602n2:284_0": "Vijaha-pi sukhumālaṁ esamantā name-haṁ.",
  "anya-e0602n2:285_0": "(Mālinīgāthā)",
  "anya-e0602n2:286_0": "52.",
  "anya-e0602n2:287_0": "Mahati sukantiye atha ca tattha sītale,",
  "anya-e0602n2:288_0": "Vasati kusambiye navamavassa-pī-tare;",
  "anya-e0602n2:289_0": "Avahi sukha-ntime pajaha-mattha-mī-dha ve,",
  "anya-e0602n2:290_0": "Panami nudaṁ hine sakalasatthavasaye.",
  "anya-e0602n2:291_0": "(Pabhaddakagāthā)",
  "anya-e0602n2:292_0": "53.",
  "anya-e0602n2:293_0": "Yudhavati pālileyyaka vane pahāya nāge,",
  "anya-e0602n2:294_0": "Upaṭhahi nāgi-dhe-sa dasame jahāya bāle;",
  "anya-e0602n2:295_0": "Sukhavasi kāyike ca manake tadāsa sāte,",
  "anya-e0602n2:296_0": "Yuta-madhi vāhite ca paname payāta māre.",
  "anya-e0602n2:297_0": "(Vāṇinīgāthā)",
  "anya-e0602n2:298_0": "54.",
  "anya-e0602n2:299_0": "Ito patte nāḷe vasati dijagāmepi dasame,",
  "anya-e0602n2:300_0": "Hitopatthenā-yeka adhiki-dha vādehi vadake;",
  "anya-e0602n2:301_0": "Vilomatthehā-neka-sahi ṭhita-māghepi samaye,",
  "anya-e0602n2:302_0": "Viyogatthe-tā-neja-mapi pihavāsehi paname.",
  "anya-e0602n2:303_0": "(Sikharaṇīgāthā)",
  "anya-e0602n2:304_0": "55.",
  "anya-e0602n2:305_0": "Dviadhiki-tare verañjāyaṁ tato dasamaṁ pare,",
  "anya-e0602n2:306_0": "Nivasi nilake khedaṅghātaṁ karo paramaṁ vane;",
  "anya-e0602n2:307_0": "Kilami idha ve vehaṅgānaṁ manoramakaṁ vase,",
  "anya-e0602n2:308_0": "Viraji-sigaṇe medhaṅkāraṁ asokadadaṁ name.",
  "anya-e0602n2:309_0": "(Hiriṇīgāthā)",
  "anya-e0602n2:310_0": "56.",
  "anya-e0602n2:311_0": "Yo sampuṇṇe upari tirase cāliye pabbatepi,",
  "anya-e0602n2:312_0": "Sobhaṁ phulle suvasi itare kāmite appamehi;",
  "anya-e0602n2:313_0": "Sāvatthikkenu-da catudase kārite ālayepi,",
  "anya-e0602n2:314_0": "Kāmo-cchidde tu bhaya muname ñātime dvārakehi.",
  "anya-e0602n2:315_0": "(Mandakkantāgāthā)",
  "anya-e0602n2:316_0": "57.",
  "anya-e0602n2:317_0": "Sakko kappile kariya madake niggaho yoti pañce,",
  "anya-e0602n2:318_0": "Dakkho kappiye vasidha yamake iddhako bhohi aññe;",
  "anya-e0602n2:319_0": "Yakkho dabbike damiya nagare soḷase-topi vaṅke,",
  "anya-e0602n2:320_0": "Aggo-ghattite paciya paname bodhake monipaññe.",
  "anya-e0602n2:321_0": "(Kusumitalatāvellitagāthā)",
  "anya-e0602n2:322_0": "58.",
  "anya-e0602n2:323_0": "Duladdhe pūre yopari ca dasato rājagehaṁ bhajanto,",
  "anya-e0602n2:324_0": "Tu satte kūle kho kari dha yapato vāsamejaṁ jahanto;",
  "anya-e0602n2:325_0": "Dumaṭṭhe pūneso ramita-calato ṭṭhārasetaṁ dadaṁ so,",
  "anya-e0602n2:326_0": "Guṇasse vūpeto namidha karabho kāyakhedaṁ sahanto.",
  "anya-e0602n2:327_0": "(Meghavipphujjitagāthā)",
  "anya-e0602n2:328_0": "59.",
  "anya-e0602n2:329_0": "Cālīye parime tatheva acale-kūnepi vīse lilaṁ,",
  "anya-e0602n2:330_0": "Bhāgī ce sa hite pageva pavase sūrehi nisevitaṁ;",
  "anya-e0602n2:331_0": "Kārite ramike pare ca nagare pūrepi vīse imaṁ,",
  "anya-e0602n2:332_0": "Hārite vasime jahena paname mūlepi khīṇe jitaṁ.",
  "anya-e0602n2:333_0": "(Saddūlavikkīlitagāthā)",
  "anya-e0602n2:334_0": "60.",
  "anya-e0602n2:335_0": "Pañcapañca-mākare tatopi piṇḍakena jetakānane ca,",
  "anya-e0602n2:336_0": "Aññamañña-mādarena yo nisinnakena te ca māpayeva;",
  "anya-e0602n2:337_0": "Pubbapubbaārāme payoji-pāsikāya vāramāvasedha,",
  "anya-e0602n2:338_0": "Suddhasuddha-māmalena poriyātimāya mānasā namesa.",
  "anya-e0602n2:339_0": "(Vuttagāthā)",
  "anya-e0602n2:340_0": "Puññenā’nena saṁsāramupadhi suci sappūrise vo paseve,",
  "anya-e0602n2:341_0": "Tehā dinnaṁ sugāho suciparisaupeto arogo bhaveyyaṁ;",
  "anya-e0602n2:342_0": "Dīghāyūko mahāpañña yasadhanasulābho ca kalyāṇamitto,",
  "anya-e0602n2:343_0": "Lokādibbo ca maggo samamatiparivārova nibbānapatto.",
  "anya-e0602n2:344_0": "(Saddharāgāthā)",
  "anya-e0602n2:345_0": "Ka.",
  "anya-e0602n2:346_0": "Nassati sāsane chanavutādhike ca tivise sate kaliyuge,",
  "anya-e0602n2:347_0": "Dvesatacuddasādhikasahassake sakalaraṭṭhakaṁ khubhi gate;",
  "anya-e0602n2:348_0": "Bhātikayuddhakena nagaraṁ tadā bhavati chārikā yatigaṇo,",
  "anya-e0602n2:349_0": "Dukkhagato mahāpaharaṇehi jivitakhayampi eti piṭake.",
  "anya-e0602n2:350_0": "(Bhaddakagāthā)",
  "anya-e0602n2:351_0": "Kha.",
  "anya-e0602n2:352_0": "Udisaka cetyakepi vikiriya nāsati dha so thiro sagaṇato,",
  "anya-e0602n2:353_0": "Vijahiya purato ttaravaneka kumbhakaragāmakaṁ nivasaye;",
  "anya-e0602n2:354_0": "Satagaṇakehi tattha janakopi “bhota idha vāsa sabbayatinaṁ,",
  "anya-e0602n2:355_0": "Upaṭṭhahamī”ti tamhi katipāhanaṁ vasati kho vimaṁsiya sukhaṁ.",
  "anya-e0602n2:356_0": "(Lalitagāthā)",
  "anya-e0602n2:357_0": "Ga.",
  "anya-e0602n2:358_0": "Tattha araññe ramito sucari saddhamma-timāni suyatīhi tipīko,",
  "anya-e0602n2:359_0": "Dhūrasuyutto parigāhiya sujāto supaṭṭhāti kunadita-muyānaṁ;",
  "anya-e0602n2:360_0": "So satamaccehi kataṁ nagari daṁ tassa ca pācina raha dhikakose,",
  "anya-e0602n2:361_0": "Paccayanāyāsu da chāyabahuko suddhayatipi idha vasanakāle.",
  "anya-e0602n2:362_0": "(Tanugāthā)",
  "anya-e0602n2:363_0": "Gha.",
  "anya-e0602n2:364_0": "Phagguṇamāse chadine raciya niṭṭhaṁva gato paramari iminā-yaṁ,",
  "anya-e0602n2:365_0": "Sijjhatu pemaṁ vata rakkhatu sudevo uda vaḍḍhatu jinavacane taṁ;",
  "anya-e0602n2:366_0": "Vāsamālinī niṭṭhitā."
}