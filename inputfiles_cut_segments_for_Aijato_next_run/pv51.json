{
  "pv51:0.1_0": "Petavatthu",
  "pv51:0.2_0": "Mahāvagga",
  "pv51:0.3_0": "16. Saṭṭhikūṭapetavatthu",
  "pv51:1.1_0": "“Kiṁ nu ummattarūpova,",
  "pv51:1.2_0": "Migo bhantova dhāvasi;",
  "pv51:1.3_0": "Nissaṁsayaṁ pāpakammanto,",
  "pv51:1.4_0": "Kiṁ nu saddāyase tuvan”ti.",
  "pv51:2.1_0": "“Ahaṁ bhadante petomhi,",
  "pv51:2.2_0": "duggato yamalokiko;",
  "pv51:2.3_0": "Pāpakammaṁ karitvāna,",
  "pv51:2.4_0": "petalokaṁ ito gato.",
  "pv51:3.1_0": "Saṭṭhi kūṭasahassāni,",
  "pv51:3.2_0": "paripuṇṇāni sabbaso;",
  "pv51:3.3_0": "Sīse mayhaṁ nipatanti,",
  "pv51:3.4_0": "te bhindanti ca matthakan”ti.",
  "pv51:4.1_0": "“Kiṁ nu kāyena vācāya,",
  "pv51:4.2_0": "manasā dukkaṭaṁ kataṁ;",
  "pv51:4.3_0": "Kissa kammavipākena,",
  "pv51:4.4_0": "idaṁ dukkhaṁ nigacchasi.",
  "pv51:5.1_0": "Saṭṭhi kūṭasahassāni,",
  "pv51:5.2_0": "paripuṇṇāni sabbaso;",
  "pv51:5.3_0": "Sīse tuyhaṁ nipatanti,",
  "pv51:5.4_0": "te bhindanti ca matthakan”ti.",
  "pv51:6.1_0": "“Athaddasāsiṁ sambuddhaṁ,",
  "pv51:6.2_0": "sunettaṁ bhāvitindriyaṁ;",
  "pv51:6.3_0": "Nisinnaṁ rukkhamūlasmiṁ,",
  "pv51:6.4_0": "jhāyantaṁ akutobhayaṁ.",
  "pv51:7.1_0": "Sālittakappahārena,",
  "pv51:7.2_0": "bhindissaṁ tassa matthakaṁ;",
  "pv51:7.3_0": "Tassa kammavipākena,",
  "pv51:7.4_0": "idaṁ dukkhaṁ nigacchisaṁ.",
  "pv51:8.1_0": "Saṭṭhi kūṭasahassāni,",
  "pv51:8.2_0": "Paripuṇṇāni sabbaso;",
  "pv51:8.3_0": "Sīse mayhaṁ nipatanti,",
  "pv51:8.4_0": "Te bhindanti ca matthakan”ti.",
  "pv51:9.1_0": "“Dhammena te kāpurisa,",
  "pv51:9.2_0": "saṭṭhikūṭasahassāni;",
  "pv51:9.3_0": "Paripuṇṇāni sabbaso,",
  "pv51:9.4_0": "sīse tuyhaṁ nipatanti;",
  "pv51:9.5_0": "Te bhindanti ca matthakan”ti.",
  "pv51:10.1_0": "Saṭṭhikūṭapetavatthu soḷasamaṁ.",
  "pv51:11.1_0": "Mahāvaggo catuttho.",
  "pv51:12.1_0": "Tassuddānaṁ",
  "pv51:13.1_0": "Ambasakkaro serīsako,",
  "pv51:13.2_0": "piṅgalo revati ucchu;",
  "pv51:13.3_0": "Dve kumārā duve gūthā,",
  "pv51:13.4_0": "gaṇapāṭaliambavanaṁ.",
  "pv51:14.1_0": "Akkharukkhabhogasaṁharā,",
  "pv51:14.2_0": "seṭṭhiputtasaṭṭhikūṭā;",
  "pv51:14.3_0": "Iti soḷasavatthūni,",
  "pv51:14.4_0": "vaggo tena pavuccati.",
  "pv51:15.1_0": "Atha vagguddānaṁ",
  "pv51:16.1_0": "Urago uparivaggo,",
  "pv51:16.2_0": "cūḷamahāti catudhā;",
  "pv51:16.3_0": "Vatthūni ekapaññāsaṁ,",
  "pv51:16.4_0": "catudhā bhāṇavārato.",
  "pv51:17.1_0": "Petavatthupāḷi niṭṭhitā."
}