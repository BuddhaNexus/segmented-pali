{
  "thag2.3:0.1_0": "Theragāthā",
  "thag2.3:0.2_0": "Dukanipāta",
  "thag2.3:0.3_0": "Paṭhamavagga",
  "thag2.3:0.4_0": "2.3. Valliyattheragāthā",
  "thag2.3:1.1_0": "“Makkaṭo pañcadvārāyaṁ,",
  "thag2.3:1.2_0": "kuṭikāyaṁ pasakkiya;",
  "thag2.3:1.3_0": "Dvārena anupariyeti,",
  "thag2.3:1.4_0": "ghaṭṭayanto muhuṁ muhuṁ.",
  "thag2.3:2.1_0": "Tiṭṭha makkaṭa mā dhāvi,",
  "thag2.3:2.2_0": "na hi te taṁ yathā pure;",
  "thag2.3:2.3_0": "Niggahītosi paññāya,",
  "thag2.3:2.4_0": "neva dūraṁ gamissatī”ti.",
  "thag2.3:2.5_0": "… Valliyo thero …."
}