{
  "bv16:0.1_0": "Buddhavaṁsa",
  "bv16:0.2_0": "16 Atthadassībuddhavaṁsa",
  "bv16:1.1_0": "“Tattheva maṇḍakappamhi,",
  "bv16:1.2_0": "atthadassī mahāyaso;",
  "bv16:1.3_0": "Mahātamaṁ nihantvāna,",
  "bv16:1.4_0": "patto sambodhimuttamaṁ.",
  "bv16:2.1_0": "Brahmunā yācito santo,",
  "bv16:2.2_0": "dhammacakkaṁ pavattayi;",
  "bv16:2.3_0": "Amatena tappayī lokaṁ,",
  "bv16:2.4_0": "dasasahassisadevakaṁ.",
  "bv16:3.1_0": "Tassāpi lokanāthassa,",
  "bv16:3.2_0": "Ahesuṁ abhisamayā tayo;",
  "bv16:3.3_0": "Koṭisatasahassānaṁ,",
  "bv16:3.4_0": "Paṭhamābhisamayo ahu.",
  "bv16:4.1_0": "Yadā buddho atthadassī,",
  "bv16:4.2_0": "carate devacārikaṁ;",
  "bv16:4.3_0": "Koṭisatasahassānaṁ,",
  "bv16:4.4_0": "dutiyābhisamayo ahu.",
  "bv16:5.1_0": "Punāparaṁ yadā buddho,",
  "bv16:5.2_0": "desesi pitusantike;",
  "bv16:5.3_0": "Koṭisatasahassānaṁ,",
  "bv16:5.4_0": "tatiyābhisamayo ahu.",
  "bv16:6.1_0": "Sannipātā tayo āsuṁ,",
  "bv16:6.2_0": "tassāpi ca mahesino;",
  "bv16:6.3_0": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv16:6.4_0": "santacittāna tādinaṁ.",
  "bv16:7.1_0": "Aṭṭhanavutisahassānaṁ,",
  "bv16:7.2_0": "paṭhamo āsi samāgamo;",
  "bv16:7.3_0": "Aṭṭhāsītisahassānaṁ,",
  "bv16:7.4_0": "dutiyo āsi samāgamo.",
  "bv16:8.1_0": "Aṭṭhasattatisatasahassānaṁ,",
  "bv16:8.2_0": "Tatiyo āsi samāgamo;",
  "bv16:8.3_0": "Anupādā vimuttānaṁ,",
  "bv16:8.4_0": "Vimalānaṁ mahesinaṁ.",
  "bv16:9.1_0": "Ahaṁ tena samayena,",
  "bv16:9.2_0": "jaṭilo uggatāpano;",
  "bv16:9.3_0": "Susīmo nāma nāmena,",
  "bv16:9.4_0": "mahiyā seṭṭhasammato.",
  "bv16:10.1_0": "Dibbaṁ mandāravaṁ pupphaṁ,",
  "bv16:10.2_0": "padumaṁ pārichattakaṁ;",
  "bv16:10.3_0": "Devalokāharitvāna,",
  "bv16:10.4_0": "sambuddhamabhipūjayiṁ.",
  "bv16:11.1_0": "Sopi maṁ buddho byākāsi,",
  "bv16:11.2_0": "atthadassī mahāmuni;",
  "bv16:11.3_0": "‘Aṭṭhārase kappasate,",
  "bv16:11.4_0": "ayaṁ buddho bhavissati.",
  "bv16:12.1_0": "Padhānaṁ padahitvāna,",
  "bv16:12.2_0": "…pe…",
  "bv16:12.3_0": "hessāma sammukhā imaṁ’.",
  "bv16:13.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv16:13.2_0": "haṭṭho saṁviggamānaso;",
  "bv16:13.3_0": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv16:13.4_0": "dasapāramipūriyā.",
  "bv16:14.1_0": "Sobhanaṁ nāma nagaraṁ,",
  "bv16:14.2_0": "sāgaro nāma khattiyo;",
  "bv16:14.3_0": "Sudassanā nāma janikā,",
  "bv16:14.4_0": "atthadassissa satthuno.",
  "bv16:15.1_0": "Dasavassasahassāni,",
  "bv16:15.2_0": "Agāraṁ ajjha so vasi;",
  "bv16:15.3_0": "Amaragiri sugiri vāhanā,",
  "bv16:15.4_0": "Tayo pāsādamuttamā.",
  "bv16:16.1_0": "Tettiṁsañca sahassāni,",
  "bv16:16.2_0": "nāriyo samalaṅkatā;",
  "bv16:16.3_0": "Visākhā nāma nārī ca,",
  "bv16:16.4_0": "selo nāmāsi atrajo.",
  "bv16:17.1_0": "Nimitte caturo disvā,",
  "bv16:17.2_0": "assayānena nikkhami;",
  "bv16:17.3_0": "Anūnaaṭṭhamāsāni,",
  "bv16:17.4_0": "padhānaṁ padahī jino.",
  "bv16:18.1_0": "Brahmunā yācito santo,",
  "bv16:18.2_0": "atthadassī mahāyaso;",
  "bv16:18.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv16:18.4_0": "anomuyyāne narāsabho.",
  "bv16:19.1_0": "Santo ca upasanto ca,",
  "bv16:19.2_0": "ahesuṁ aggasāvakā;",
  "bv16:19.3_0": "Abhayo nāmupaṭṭhāko,",
  "bv16:19.4_0": "atthadassissa satthuno.",
  "bv16:20.1_0": "Dhammā ceva sudhammā ca,",
  "bv16:20.2_0": "ahesuṁ aggasāvikā;",
  "bv16:20.3_0": "Bodhi tassa bhagavato,",
  "bv16:20.4_0": "campakoti pavuccati.",
  "bv16:21.1_0": "Nakulo ca nisabho ca,",
  "bv16:21.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv16:21.3_0": "Makilā ca sunandā ca,",
  "bv16:21.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv16:22.1_0": "Sopi buddho asamasamo,",
  "bv16:22.2_0": "asītihatthamuggato;",
  "bv16:22.3_0": "Sobhate sālarājāva,",
  "bv16:22.4_0": "uḷurājāva pūrito.",
  "bv16:23.1_0": "Tassa pākatikā raṁsī,",
  "bv16:23.2_0": "anekasatakoṭiyo;",
  "bv16:23.3_0": "Uddhaṁ adho dasa disā,",
  "bv16:23.4_0": "pharanti yojanaṁ sadā.",
  "bv16:24.1_0": "Sopi buddho narāsabho,",
  "bv16:24.2_0": "sabbasattuttamo muni;",
  "bv16:24.3_0": "Vassasatasahassāni,",
  "bv16:24.4_0": "loke aṭṭhāsi cakkhumā.",
  "bv16:25.1_0": "Atulaṁ dassetvā obhāsaṁ,",
  "bv16:25.2_0": "virocetvā sadevake;",
  "bv16:25.3_0": "Sopi aniccataṁ patto,",
  "bv16:25.4_0": "yathaggupādānasaṅkhayā.",
  "bv16:26.1_0": "Atthadassī jinavaro,",
  "bv16:26.2_0": "Anomārāmamhi nibbuto;",
  "bv16:26.3_0": "Dhātuvitthārikaṁ āsi,",
  "bv16:26.4_0": "Tesu tesu padesato”ti.",
  "bv16:27.1_0": "Atthadassissa bhagavato vaṁso cuddasamo."
}