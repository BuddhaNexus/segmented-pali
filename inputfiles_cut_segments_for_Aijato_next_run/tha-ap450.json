{
  "tha-ap450:0.1_0": "Therāpadāna",
  "tha-ap450:0.2_0": "Vibhītakavagga",
  "tha-ap450:0.3_0": "8. Pādapīṭhiyattheraapadāna",
  "tha-ap450:1.1_0": "“Sumedho nāma sambuddho,",
  "tha-ap450:1.2_0": "aggo kāruṇiko muni;",
  "tha-ap450:1.3_0": "Tārayitvā bahū satte,",
  "tha-ap450:1.4_0": "nibbuto so mahāyaso.",
  "tha-ap450:2.1_0": "Sīhāsanassa sāmantā,",
  "tha-ap450:2.2_0": "sumedhassa mahesino;",
  "tha-ap450:2.3_0": "Pasannacitto sumano,",
  "tha-ap450:2.4_0": "pādapīṭhamakārayiṁ.",
  "tha-ap450:3.1_0": "Katvāna kusalaṁ kammaṁ,",
  "tha-ap450:3.2_0": "sukhapākaṁ sukhudrayaṁ;",
  "tha-ap450:3.3_0": "Puññakammena saṁyutto,",
  "tha-ap450:3.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap450:4.1_0": "Tattha me vasamānassa,",
  "tha-ap450:4.2_0": "puññakammasamaṅgino;",
  "tha-ap450:4.3_0": "Padāni uddharantassa,",
  "tha-ap450:4.4_0": "soṇṇapīṭhā bhavanti me.",
  "tha-ap450:5.1_0": "Lābhā tesaṁ suladdhaṁ vo,",
  "tha-ap450:5.2_0": "ye labhanti upassutiṁ;",
  "tha-ap450:5.3_0": "Nibbute kāraṁ katvāna,",
  "tha-ap450:5.4_0": "labhanti vipulaṁ sukhaṁ.",
  "tha-ap450:6.1_0": "Mayāpi sukataṁ kammaṁ,",
  "tha-ap450:6.2_0": "vāṇijjaṁ suppayojitaṁ;",
  "tha-ap450:6.3_0": "Pādapīṭhaṁ karitvāna,",
  "tha-ap450:6.4_0": "soṇṇapīṭhaṁ labhāmahaṁ.",
  "tha-ap450:7.1_0": "Yaṁ yaṁ disaṁ pakkamāmi,",
  "tha-ap450:7.2_0": "kenaci kiccayenahaṁ;",
  "tha-ap450:7.3_0": "Soṇṇapīṭhe akkamāmi,",
  "tha-ap450:7.4_0": "puññakammassidaṁ phalaṁ.",
  "tha-ap450:8.1_0": "Tiṁsakappasahassamhi,",
  "tha-ap450:8.2_0": "yaṁ kammamakariṁ tadā;",
  "tha-ap450:8.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap450:8.4_0": "pādapīṭhassidaṁ phalaṁ.",
  "tha-ap450:9.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap450:9.2_0": "…pe…",
  "tha-ap450:9.3_0": "viharāmi anāsavo.",
  "tha-ap450:10.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap450:10.2_0": "…pe…",
  "tha-ap450:10.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap450:11.1_0": "Paṭisambhidā catasso,",
  "tha-ap450:11.2_0": "…pe…",
  "tha-ap450:11.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap450:12.1_0": "Itthaṁ sudaṁ āyasmā pādapīṭhiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap450:13.1_0": "Pādapīṭhiyattherassāpadānaṁ aṭṭhamaṁ."
}