{
  "thag8.1:0.1_0": "Theragāthā",
  "thag8.1:0.2_0": "Aṭṭhakanipāta",
  "thag8.1:0.3_0": "Paṭhamavagga",
  "thag8.1:0.4_0": "8.1. Mahākaccāyanattheragāthā",
  "thag8.1:1.1_0": "“Kammaṁ bahukaṁ na kāraye,",
  "thag8.1:1.2_0": "Parivajjeyya janaṁ na uyyame;",
  "thag8.1:1.3_0": "So ussukko rasānugiddho,",
  "thag8.1:1.4_0": "Atthaṁ riñcati yo sukhādhivāho.",
  "thag8.1:2.1_0": "Paṅkoti hi naṁ avedayuṁ,",
  "thag8.1:2.2_0": "Yāyaṁ vandanapūjanā kulesu;",
  "thag8.1:2.3_0": "Sukhumaṁ sallaṁ durubbahaṁ,",
  "thag8.1:2.4_0": "Sakkāro kāpurisena dujjaho.",
  "thag8.1:3.1_0": "Na parassupanidhāya,",
  "thag8.1:3.2_0": "kammaṁ maccassa pāpakaṁ;",
  "thag8.1:3.3_0": "Attanā taṁ na seveyya,",
  "thag8.1:3.4_0": "kammabandhū hi mātiyā.",
  "thag8.1:4.1_0": "Na pare vacanā coro,",
  "thag8.1:4.2_0": "na pare vacanā muni;",
  "thag8.1:4.3_0": "Attā ca naṁ yathāvedi,",
  "thag8.1:4.4_0": "devāpi naṁ tathā vidū.",
  "thag8.1:5.1_0": "Pare ca na vijānanti,",
  "thag8.1:5.2_0": "mayamettha yamāmase;",
  "thag8.1:5.3_0": "Ye ca tattha vijānanti,",
  "thag8.1:5.4_0": "tato sammanti medhagā.",
  "thag8.1:6.1_0": "Jīvate vāpi sappañño,",
  "thag8.1:6.2_0": "api vittaparikkhayo;",
  "thag8.1:6.3_0": "Paññāya ca alābhena,",
  "thag8.1:6.4_0": "vittavāpi na jīvati.",
  "thag8.1:7.1_0": "Sabbaṁ suṇāti sotena,",
  "thag8.1:7.2_0": "sabbaṁ passati cakkhunā;",
  "thag8.1:7.3_0": "Na ca diṭṭhaṁ sutaṁ dhīro,",
  "thag8.1:7.4_0": "sabbaṁ ujjhitumarahati.",
  "thag8.1:8.1_0": "Cakkhumāssa yathā andho,",
  "thag8.1:8.2_0": "sotavā badhiro yathā;",
  "thag8.1:8.3_0": "Paññavāssa yathā mūgo,",
  "thag8.1:8.4_0": "balavā dubbaloriva;",
  "thag8.1:8.5_0": "Atha atthe samuppanne,",
  "thag8.1:8.6_0": "sayetha matasāyikan”ti.",
  "thag8.1:8.7_0": "… Mahākaccāyano thero …."
}