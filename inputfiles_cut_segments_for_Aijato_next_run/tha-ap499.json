{
  "tha-ap499:0.1_0": "Therāpadāna",
  "tha-ap499:0.2_0": "Kiṅkaṇipupphavagga",
  "tha-ap499:0.3_0": "7. Udakadāyakattheraapadāna",
  "tha-ap499:1.1_0": "“Padumuttarabuddhassa,",
  "tha-ap499:1.2_0": "bhikkhusaṅghe anuttare;",
  "tha-ap499:1.3_0": "Pasannacitto sumano,",
  "tha-ap499:1.4_0": "pānīghaṭamapūrayiṁ.",
  "tha-ap499:2.1_0": "Pabbatagge dumagge vā,",
  "tha-ap499:2.2_0": "ākāse vātha bhūmiyaṁ;",
  "tha-ap499:2.3_0": "Yadā pānīyamicchāmi,",
  "tha-ap499:2.4_0": "khippaṁ nibbattate mama.",
  "tha-ap499:3.1_0": "Satasahassito kappe,",
  "tha-ap499:3.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap499:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap499:3.4_0": "dakadānassidaṁ phalaṁ.",
  "tha-ap499:4.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap499:4.2_0": "…pe…",
  "tha-ap499:4.3_0": "viharāmi anāsavo.",
  "tha-ap499:5.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap499:5.2_0": "…pe…",
  "tha-ap499:5.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap499:6.1_0": "Paṭisambhidā catasso,",
  "tha-ap499:6.2_0": "…pe…",
  "tha-ap499:6.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap499:7.1_0": "Itthaṁ sudaṁ āyasmā udakadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap499:8.1_0": "Udakadāyakattherassāpadānaṁ sattamaṁ."
}