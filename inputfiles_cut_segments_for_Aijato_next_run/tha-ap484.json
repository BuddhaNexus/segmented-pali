{
  "tha-ap484:0.1_0": "Therāpadāna",
  "tha-ap484:0.2_0": "Paṁsukūlavagga",
  "tha-ap484:0.3_0": "2. Buddhasaññakattheraapadāna",
  "tha-ap484:1.1_0": "“Ajjhāyako mantadharo,",
  "tha-ap484:1.2_0": "tiṇṇaṁ vedāna pāragū;",
  "tha-ap484:1.3_0": "Lakkhaṇe itihāse ca,",
  "tha-ap484:1.4_0": "sanighaṇḍusakeṭubhe.",
  "tha-ap484:2.1_0": "Nadīsotapaṭibhāgā,",
  "tha-ap484:2.2_0": "sissā āyanti me tadā;",
  "tha-ap484:2.3_0": "Tesāhaṁ mante vācemi,",
  "tha-ap484:2.4_0": "rattindivamatandito.",
  "tha-ap484:3.1_0": "Siddhattho nāma sambuddho,",
  "tha-ap484:3.2_0": "loke uppajji tāvade;",
  "tha-ap484:3.3_0": "Tamandhakāraṁ nāsetvā,",
  "tha-ap484:3.4_0": "ñāṇālokaṁ pavattayi.",
  "tha-ap484:4.1_0": "Mama aññataro sisso,",
  "tha-ap484:4.2_0": "sissānaṁ so kathesi me;",
  "tha-ap484:4.3_0": "Sutvāna te etamatthaṁ,",
  "tha-ap484:4.4_0": "ārocesuṁ mamaṁ tadā.",
  "tha-ap484:5.1_0": "‘Buddho loke samuppanno,",
  "tha-ap484:5.2_0": "sabbaññū lokanāyako;",
  "tha-ap484:5.3_0": "Tassānuvattati jano,",
  "tha-ap484:5.4_0": "lābho amhaṁ na vijjati.",
  "tha-ap484:6.1_0": "Adhiccuppattikā buddhā,",
  "tha-ap484:6.2_0": "cakkhumanto mahāyasā;",
  "tha-ap484:6.3_0": "Yannūnāhaṁ buddhaseṭṭhaṁ,",
  "tha-ap484:6.4_0": "passeyyaṁ lokanāyakaṁ’.",
  "tha-ap484:7.1_0": "Ajinaṁ me gahetvāna,",
  "tha-ap484:7.2_0": "vākacīraṁ kamaṇḍaluṁ;",
  "tha-ap484:7.3_0": "Assamā abhinikkhamma,",
  "tha-ap484:7.4_0": "sisse āmantayiṁ ahaṁ.",
  "tha-ap484:8.1_0": "Odumbarikapupphaṁva,",
  "tha-ap484:8.2_0": "candamhi sasakaṁ yathā;",
  "tha-ap484:8.3_0": "Vāyasānaṁ yathā khīraṁ,",
  "tha-ap484:8.4_0": "dullabho lokanāyako.",
  "tha-ap484:9.1_0": "Buddho lokamhi uppanno,",
  "tha-ap484:9.2_0": "manussattampi dullabhaṁ;",
  "tha-ap484:9.3_0": "Ubhosu vijjamānesu,",
  "tha-ap484:9.4_0": "savanañca sudullabhaṁ.",
  "tha-ap484:10.1_0": "Buddho loke samuppanno,",
  "tha-ap484:10.2_0": "cakkhuṁ lacchāma no bhavaṁ;",
  "tha-ap484:10.3_0": "Etha sabbe gamissāma,",
  "tha-ap484:10.4_0": "sammāsambuddhasantikaṁ.",
  "tha-ap484:11.1_0": "Kamaṇḍaludharā sabbe,",
  "tha-ap484:11.2_0": "kharājinanivāsino;",
  "tha-ap484:11.3_0": "Te jaṭā bhārabharitā,",
  "tha-ap484:11.4_0": "nikkhamuṁ vipinā tadā.",
  "tha-ap484:12.1_0": "Yugamattaṁ pekkhamānā,",
  "tha-ap484:12.2_0": "uttamatthaṁ gavesino;",
  "tha-ap484:12.3_0": "Āsattidosarahitā,",
  "tha-ap484:12.4_0": "asambhītāva kesarī.",
  "tha-ap484:13.1_0": "Appakiccā aloluppā,",
  "tha-ap484:13.2_0": "nipakā santavuttino;",
  "tha-ap484:13.3_0": "Uñchāya caramānā te,",
  "tha-ap484:13.4_0": "buddhaseṭṭhamupāgamuṁ.",
  "tha-ap484:14.1_0": "Diyaḍḍhayojane sese,",
  "tha-ap484:14.2_0": "byādhi me upapajjatha;",
  "tha-ap484:14.3_0": "Buddhaseṭṭhaṁ saritvāna,",
  "tha-ap484:14.4_0": "tattha kālaṅkato ahaṁ.",
  "tha-ap484:15.1_0": "Catunnavutito kappe,",
  "tha-ap484:15.2_0": "yaṁ saññamalabhiṁ tadā;",
  "tha-ap484:15.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap484:15.4_0": "buddhasaññāyidaṁ phalaṁ.",
  "tha-ap484:16.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap484:16.2_0": "…pe…",
  "tha-ap484:16.3_0": "viharāmi anāsavo.",
  "tha-ap484:17.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap484:17.2_0": "…pe…",
  "tha-ap484:17.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap484:18.1_0": "Paṭisambhidā catasso,",
  "tha-ap484:18.2_0": "…pe…",
  "tha-ap484:18.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap484:19.1_0": "Itthaṁ sudaṁ āyasmā buddhasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap484:20.1_0": "Buddhasaññakattherassāpadānaṁ dutiyaṁ."
}