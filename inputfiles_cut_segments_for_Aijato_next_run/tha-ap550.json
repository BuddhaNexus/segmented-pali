{
  "tha-ap550:0.1_0": "Therāpadāna",
  "tha-ap550:0.2_0": "Bhaddiyavagga",
  "tha-ap550:0.3_0": "8 Lomasakaṅgiyattheraapadāna",
  "tha-ap550:1.1_0": "“Imamhi bhaddake kappe,",
  "tha-ap550:1.2_0": "brahmabandhu mahāyaso;",
  "tha-ap550:1.3_0": "Kassapo nāma gottena,",
  "tha-ap550:1.4_0": "uppajji vadataṁ varo.",
  "tha-ap550:2.1_0": "Tadāhaṁ candano ceva,",
  "tha-ap550:2.2_0": "pabbajitvāna sāsane;",
  "tha-ap550:2.3_0": "Āpāṇakoṭikaṁ dhammaṁ,",
  "tha-ap550:2.4_0": "pūrayitvāna sāsane.",
  "tha-ap550:3.1_0": "Tato cutā santusitaṁ,",
  "tha-ap550:3.2_0": "upapannā ubho mayaṁ;",
  "tha-ap550:3.3_0": "Tattha dibbehi naccehi,",
  "tha-ap550:3.4_0": "gītehi vāditehi ca.",
  "tha-ap550:4.1_0": "Rūpādidasahaṅgehi,",
  "tha-ap550:4.2_0": "abhibhotvāna sesake;",
  "tha-ap550:4.3_0": "Yāvatāyuṁ vasitvāna,",
  "tha-ap550:4.4_0": "anubhotvā mahāsukhaṁ.",
  "tha-ap550:5.1_0": "Tato cavitvā tidasaṁ,",
  "tha-ap550:5.2_0": "candano upapajjatha;",
  "tha-ap550:5.3_0": "Ahaṁ kapilavatthusmiṁ,",
  "tha-ap550:5.4_0": "ajāyiṁ sākiyatrajo.",
  "tha-ap550:6.1_0": "Yadā udāyittherena,",
  "tha-ap550:6.2_0": "ajjhiṭṭho lokanāyako;",
  "tha-ap550:6.3_0": "Anukampiya sakyānaṁ,",
  "tha-ap550:6.4_0": "upesi kapilavhayaṁ.",
  "tha-ap550:7.1_0": "Tadātimānino sakyā,",
  "tha-ap550:7.2_0": "na buddhassa guṇaññuno;",
  "tha-ap550:7.3_0": "Paṇamanti na sambuddhaṁ,",
  "tha-ap550:7.4_0": "jātithaddhā anādarā.",
  "tha-ap550:8.1_0": "Tesaṁ saṅkappamaññāya,",
  "tha-ap550:8.2_0": "ākāse caṅkamī jino;",
  "tha-ap550:8.3_0": "Pajjunno viya vassittha,",
  "tha-ap550:8.4_0": "pajjalittha yathā sikhī.",
  "tha-ap550:9.1_0": "Dassetvā rūpamatulaṁ,",
  "tha-ap550:9.2_0": "puna antaradhāyatha;",
  "tha-ap550:9.3_0": "Ekopi hutvā bahudhā,",
  "tha-ap550:9.4_0": "ahosi punarekako.",
  "tha-ap550:10.1_0": "Andhakāraṁ pakāsañca,",
  "tha-ap550:10.2_0": "dassayitvā anekadhā;",
  "tha-ap550:10.3_0": "Pāṭiheraṁ karitvāna,",
  "tha-ap550:10.4_0": "vinayī ñātake muni.",
  "tha-ap550:11.1_0": "Cātuddīpo mahāmegho,",
  "tha-ap550:11.2_0": "tāvadeva pavassatha;",
  "tha-ap550:11.3_0": "Tadā hi jātakaṁ buddho,",
  "tha-ap550:11.4_0": "vessantaramadesayi.",
  "tha-ap550:12.1_0": "Tadā te khattiyā sabbe,",
  "tha-ap550:12.2_0": "nihantvā jātijaṁ madaṁ;",
  "tha-ap550:12.3_0": "Upesuṁ saraṇaṁ buddhaṁ,",
  "tha-ap550:12.4_0": "āha suddhodano tadā.",
  "tha-ap550:13.1_0": "‘Idaṁ tatiyaṁ tava bhūripañña,",
  "tha-ap550:13.2_0": "Pādāni vandāmi samantacakkhu;",
  "tha-ap550:13.3_0": "Yadābhijāto pathavī pakampayī,",
  "tha-ap550:13.4_0": "Yadā ca taṁ najjahi jambuchāyā’.",
  "tha-ap550:14.1_0": "Tadā buddhānubhāvaṁ taṁ,",
  "tha-ap550:14.2_0": "disvā vimhitamānaso;",
  "tha-ap550:14.3_0": "Pabbajitvāna tattheva,",
  "tha-ap550:14.4_0": "nivasiṁ mātupūjako.",
  "tha-ap550:15.1_0": "Candano devaputto maṁ,",
  "tha-ap550:15.2_0": "upagantvānupucchatha;",
  "tha-ap550:15.3_0": "Bhaddekarattassa tadā,",
  "tha-ap550:15.4_0": "saṅkhepavitthāraṁ nayaṁ.",
  "tha-ap550:16.1_0": "Coditohaṁ tadā tena,",
  "tha-ap550:16.2_0": "upecca naranāyakaṁ;",
  "tha-ap550:16.3_0": "Bhaddekarattaṁ sutvāna,",
  "tha-ap550:16.4_0": "saṁviggo vanamāmako.",
  "tha-ap550:17.1_0": "Tadā mātaramapucchiṁ,",
  "tha-ap550:17.2_0": "‘vane vacchāmi ekako’;",
  "tha-ap550:17.3_0": "‘Sukhumālo’ti me mātā,",
  "tha-ap550:17.4_0": "vārayī taṁ tadā vacaṁ.",
  "tha-ap550:18.1_0": "‘Kāsaṁ kusaṁ poṭakilaṁ,",
  "tha-ap550:18.2_0": "usīraṁ muñjapabbajaṁ;",
  "tha-ap550:18.3_0": "Urasā panudissāmi,",
  "tha-ap550:18.4_0": "vivekamanubrūhayaṁ’.",
  "tha-ap550:19.1_0": "Tadā vanaṁ paviṭṭhohaṁ,",
  "tha-ap550:19.2_0": "saritvā jinasāsanaṁ;",
  "tha-ap550:19.3_0": "Bhaddekarattaovādaṁ,",
  "tha-ap550:19.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap550:20.1_0": "‘Atītaṁ nānvāgameyya,",
  "tha-ap550:20.2_0": "nappaṭikaṅkhe anāgataṁ;",
  "tha-ap550:20.3_0": "Yadatītaṁ pahīnaṁ taṁ,",
  "tha-ap550:20.4_0": "appattañca anāgataṁ.",
  "tha-ap550:21.1_0": "Paccuppannañca yo dhammaṁ,",
  "tha-ap550:21.2_0": "tattha tattha vipassati;",
  "tha-ap550:21.3_0": "Asaṁhīraṁ asaṅkuppaṁ,",
  "tha-ap550:21.4_0": "taṁ vidvā manubrūhaye.",
  "tha-ap550:22.1_0": "Ajjeva kiccamātappaṁ,",
  "tha-ap550:22.2_0": "ko jaññā maraṇaṁ suve;",
  "tha-ap550:22.3_0": "Na hi no saṅgaraṁ tena,",
  "tha-ap550:22.4_0": "mahāsenena maccunā.",
  "tha-ap550:23.1_0": "Evaṁvihāriṁ ātāpiṁ,",
  "tha-ap550:23.2_0": "ahorattamatanditaṁ;",
  "tha-ap550:23.3_0": "Taṁ ve bhaddekarattoti,",
  "tha-ap550:23.4_0": "santo ācikkhate muni’.",
  "tha-ap550:24.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap550:24.2_0": "…pe…",
  "tha-ap550:24.3_0": "viharāmi anāsavo.",
  "tha-ap550:25.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap550:25.2_0": "…pe…",
  "tha-ap550:25.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap550:26.1_0": "Paṭisambhidā catasso,",
  "tha-ap550:26.2_0": "…pe…",
  "tha-ap550:26.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap550:27.1_0": "Itthaṁ sudaṁ āyasmā lomasakaṅgiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap550:28.1_0": "Lomasakaṅgiyattherassāpadānaṁ aṭṭhamaṁ."
}