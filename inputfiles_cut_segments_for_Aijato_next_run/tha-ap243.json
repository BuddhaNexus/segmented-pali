{
  "tha-ap243:0.1_0": "Therāpadāna",
  "tha-ap243:0.2_0": "Tuvaradāyakavagga",
  "tha-ap243:0.3_0": "1 Tuvaradāyakattheraapadāna",
  "tha-ap243:1.1_0": "“Migaluddo pure āsiṁ,",
  "tha-ap243:1.2_0": "araññe kānane ahaṁ;",
  "tha-ap243:1.3_0": "Bharitvā tuvaramādāya,",
  "tha-ap243:1.4_0": "saṅghassa adadiṁ ahaṁ.",
  "tha-ap243:2.1_0": "Ekanavutito kappe,",
  "tha-ap243:2.2_0": "yaṁ dānamadadiṁ tadā;",
  "tha-ap243:2.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap243:2.4_0": "tuvarassa idaṁ phalaṁ.",
  "tha-ap243:3.1_0": "Paṭisambhidā catasso,",
  "tha-ap243:3.2_0": "vimokkhāpi ca aṭṭhime;",
  "tha-ap243:3.3_0": "Chaḷabhiññā sacchikatā,",
  "tha-ap243:3.4_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap243:4.1_0": "Itthaṁ sudaṁ āyasmā tuvaradāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap243:5.1_0": "Tuvaradāyakattherassāpadānaṁ paṭhamaṁ."
}