{
  "tha-ap539:0.1_0": "Therāpadāna",
  "tha-ap539:0.2_0": "Kaccāyanavagga",
  "tha-ap539:0.3_0": "7 Mahākoṭṭhikattheraapadāna",
  "tha-ap539:1.1_0": "“Padumuttaro nāma jino,",
  "tha-ap539:1.2_0": "sabbalokavidū muni;",
  "tha-ap539:1.3_0": "Ito satasahassamhi,",
  "tha-ap539:1.4_0": "kappe uppajji cakkhumā.",
  "tha-ap539:2.1_0": "Ovādako viññāpako,",
  "tha-ap539:2.2_0": "tārako sabbapāṇinaṁ;",
  "tha-ap539:2.3_0": "Desanākusalo buddho,",
  "tha-ap539:2.4_0": "tāresi janataṁ bahuṁ.",
  "tha-ap539:3.1_0": "Anukampako kāruṇiko,",
  "tha-ap539:3.2_0": "hitesī sabbapāṇinaṁ;",
  "tha-ap539:3.3_0": "Sampatte titthiye sabbe,",
  "tha-ap539:3.4_0": "pañcasīle patiṭṭhapi.",
  "tha-ap539:4.1_0": "Evaṁ nirākulaṁ āsi,",
  "tha-ap539:4.2_0": "suññataṁ titthiyehi ca;",
  "tha-ap539:4.3_0": "Vicittaṁ arahantehi,",
  "tha-ap539:4.4_0": "vasībhūtehi tādibhi.",
  "tha-ap539:5.1_0": "Ratanānaṭṭhapaññāsaṁ,",
  "tha-ap539:5.2_0": "uggato so mahāmuni;",
  "tha-ap539:5.3_0": "Kañcanagghiyasaṅkāso,",
  "tha-ap539:5.4_0": "bāttiṁsavaralakkhaṇo.",
  "tha-ap539:6.1_0": "Vassasatasahassāni,",
  "tha-ap539:6.2_0": "āyu vijjati tāvade;",
  "tha-ap539:6.3_0": "Tāvatā tiṭṭhamāno so,",
  "tha-ap539:6.4_0": "tāresi janataṁ bahuṁ.",
  "tha-ap539:7.1_0": "Tadāhaṁ haṁsavatiyaṁ,",
  "tha-ap539:7.2_0": "brāhmaṇo vedapāragū;",
  "tha-ap539:7.3_0": "Upecca sabbalokaggaṁ,",
  "tha-ap539:7.4_0": "assosiṁ dhammadesanaṁ.",
  "tha-ap539:8.1_0": "Tadā so sāvakaṁ vīro,",
  "tha-ap539:8.2_0": "pabhinnamatigocaraṁ;",
  "tha-ap539:8.3_0": "Atthe dhamme nirutte ca,",
  "tha-ap539:8.4_0": "paṭibhāne ca kovidaṁ.",
  "tha-ap539:9.1_0": "Ṭhapesi etadaggamhi,",
  "tha-ap539:9.2_0": "taṁ sutvā mudito ahaṁ;",
  "tha-ap539:9.3_0": "Sasāvakaṁ jinavaraṁ,",
  "tha-ap539:9.4_0": "sattāhaṁ bhojayiṁ tadā.",
  "tha-ap539:10.1_0": "Dussehacchādayitvāna,",
  "tha-ap539:10.2_0": "sasissaṁ buddhisāgaraṁ;",
  "tha-ap539:10.3_0": "Nipacca pādamūlamhi,",
  "tha-ap539:10.4_0": "taṁ ṭhānaṁ patthayiṁ ahaṁ.",
  "tha-ap539:11.1_0": "Tato avoca lokaggo,",
  "tha-ap539:11.2_0": "‘passathetaṁ dijuttamaṁ;",
  "tha-ap539:11.3_0": "Vinataṁ pādamūle me,",
  "tha-ap539:11.4_0": "kamalodarasappabhaṁ.",
  "tha-ap539:12.1_0": "Buddhaseṭṭhassa bhikkhussa,",
  "tha-ap539:12.2_0": "Ṭhānaṁ patthayate ayaṁ;",
  "tha-ap539:12.3_0": "Tāya saddhāya cāgena,",
  "tha-ap539:12.4_0": "Saddhammassavanena ca.",
  "tha-ap539:13.1_0": "Sabbattha sukhito hutvā,",
  "tha-ap539:13.2_0": "saṁsaritvā bhavābhave;",
  "tha-ap539:13.3_0": "Anāgatamhi addhāne,",
  "tha-ap539:13.4_0": "lacchase taṁ manorathaṁ.",
  "tha-ap539:14.1_0": "Satasahassito kappe,",
  "tha-ap539:14.2_0": "okkākakulasambhavo;",
  "tha-ap539:14.3_0": "Gotamo nāma gottena,",
  "tha-ap539:14.4_0": "satthā loke bhavissati.",
  "tha-ap539:15.1_0": "Tassa dhammesu dāyādo,",
  "tha-ap539:15.2_0": "oraso dhammanimmito;",
  "tha-ap539:15.3_0": "Koṭṭhiko nāma nāmena,",
  "tha-ap539:15.4_0": "hessati satthu sāvako’.",
  "tha-ap539:16.1_0": "Taṁ sutvā mudito hutvā,",
  "tha-ap539:16.2_0": "yāvajīvaṁ tadā jinaṁ;",
  "tha-ap539:16.3_0": "Mettacitto paricariṁ,",
  "tha-ap539:16.4_0": "sato paññāsamāhito.",
  "tha-ap539:17.1_0": "Tena kammavipākena,",
  "tha-ap539:17.2_0": "cetanāpaṇidhīhi ca;",
  "tha-ap539:17.3_0": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap539:17.4_0": "tāvatiṁsamagacchahaṁ.",
  "tha-ap539:18.1_0": "Satānaṁ tīṇikkhattuñca,",
  "tha-ap539:18.2_0": "devarajjamakārayiṁ;",
  "tha-ap539:18.3_0": "Satānaṁ pañcakkhattuñca,",
  "tha-ap539:18.4_0": "cakkavattī ahosahaṁ.",
  "tha-ap539:19.1_0": "Padesarajjaṁ vipulaṁ,",
  "tha-ap539:19.2_0": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap539:19.3_0": "Sabbattha sukhito āsiṁ,",
  "tha-ap539:19.4_0": "tassa kammassa vāhasā.",
  "tha-ap539:20.1_0": "Duve bhave saṁsarāmi,",
  "tha-ap539:20.2_0": "devatte atha mānuse;",
  "tha-ap539:20.3_0": "Aññaṁ gatiṁ na gacchāmi,",
  "tha-ap539:20.4_0": "suciṇṇassa idaṁ phalaṁ.",
  "tha-ap539:21.1_0": "Duve kule pajāyāmi,",
  "tha-ap539:21.2_0": "khattiye atha brāhmaṇe;",
  "tha-ap539:21.3_0": "Nīce kule na jāyāmi,",
  "tha-ap539:21.4_0": "suciṇṇassa idaṁ phalaṁ.",
  "tha-ap539:22.1_0": "Pacchime bhave sampatte,",
  "tha-ap539:22.2_0": "brahmabandhu ahosahaṁ;",
  "tha-ap539:22.3_0": "Sāvatthiyaṁ vippakule,",
  "tha-ap539:22.4_0": "paccājāto mahaddhane.",
  "tha-ap539:23.1_0": "Mātā candavatī nāma,",
  "tha-ap539:23.2_0": "pitā me assalāyano;",
  "tha-ap539:23.3_0": "Yadā me pitaraṁ buddho,",
  "tha-ap539:23.4_0": "vinayī sabbasuddhiyā.",
  "tha-ap539:24.1_0": "Tadā pasanno sugate,",
  "tha-ap539:24.2_0": "pabbajiṁ anagāriyaṁ;",
  "tha-ap539:24.3_0": "Moggallāno ācariyo,",
  "tha-ap539:24.4_0": "upajjhā sārisambhavo.",
  "tha-ap539:25.1_0": "Kesesu chijjamānesu,",
  "tha-ap539:25.2_0": "diṭṭhi chinnā samūlikā;",
  "tha-ap539:25.3_0": "Nivāsento ca kāsāvaṁ,",
  "tha-ap539:25.4_0": "arahattamapāpuṇiṁ.",
  "tha-ap539:26.1_0": "Atthadhammaniruttīsu,",
  "tha-ap539:26.2_0": "paṭibhāne ca me mati;",
  "tha-ap539:26.3_0": "Pabhinnā tena lokaggo,",
  "tha-ap539:26.4_0": "etadagge ṭhapesi maṁ.",
  "tha-ap539:27.1_0": "Asandiṭṭhaṁ viyākāsiṁ,",
  "tha-ap539:27.2_0": "upatissena pucchito;",
  "tha-ap539:27.3_0": "Paṭisambhidāsu tenāhaṁ,",
  "tha-ap539:27.4_0": "aggo sambuddhasāsane.",
  "tha-ap539:28.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap539:28.2_0": "…pe…",
  "tha-ap539:28.3_0": "viharāmi anāsavo.",
  "tha-ap539:29.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap539:29.2_0": "…pe…",
  "tha-ap539:29.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap539:30.1_0": "Paṭisambhidā catasso,",
  "tha-ap539:30.2_0": "…pe…",
  "tha-ap539:30.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap539:31.1_0": "Itthaṁ sudaṁ āyasmā mahākoṭṭhiko thero imā gāthāyo abhāsitthāti.",
  "tha-ap539:32.1_0": "Mahākoṭṭhikattherassāpadānaṁ sattamaṁ."
}