{
  "tha-ap504:0.1_0": "Therāpadāna",
  "tha-ap504:0.2_0": "Kaṇikāravagga",
  "tha-ap504:0.3_0": "2. Ekapattadāyakattheraapadāna",
  "tha-ap504:1.1_0": "“Nagare haṁsavatiyā,",
  "tha-ap504:1.2_0": "kumbhakāro ahosahaṁ;",
  "tha-ap504:1.3_0": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap504:1.4_0": "oghatiṇṇamanāsavaṁ.",
  "tha-ap504:2.1_0": "Sukataṁ mattikāpattaṁ,",
  "tha-ap504:2.2_0": "buddhaseṭṭhassadāsahaṁ;",
  "tha-ap504:2.3_0": "Pattaṁ datvā bhagavato,",
  "tha-ap504:2.4_0": "ujubhūtassa tādino.",
  "tha-ap504:3.1_0": "Bhave nibbattamānohaṁ,",
  "tha-ap504:3.2_0": "soṇṇathāle labhāmahaṁ;",
  "tha-ap504:3.3_0": "Rūpimaye ca sovaṇṇe,",
  "tha-ap504:3.4_0": "taṭṭike ca maṇīmaye.",
  "tha-ap504:4.1_0": "Pātiyo paribhuñjāmi,",
  "tha-ap504:4.2_0": "puññakammassidaṁ phalaṁ;",
  "tha-ap504:4.3_0": "Yasānañca dhanānañca,",
  "tha-ap504:4.4_0": "aggabhūto ca homahaṁ.",
  "tha-ap504:5.1_0": "Yathāpi bhaddake khette,",
  "tha-ap504:5.2_0": "bījaṁ appampi ropitaṁ;",
  "tha-ap504:5.3_0": "Sammādhāraṁ pavecchante,",
  "tha-ap504:5.4_0": "phalaṁ toseti kassakaṁ.",
  "tha-ap504:6.1_0": "Tathevidaṁ pattadānaṁ,",
  "tha-ap504:6.2_0": "buddhakhettamhi ropitaṁ;",
  "tha-ap504:6.3_0": "Pītidhāre pavassante,",
  "tha-ap504:6.4_0": "phalaṁ maṁ tosayissati.",
  "tha-ap504:7.1_0": "Yāvatā khettā vijjanti,",
  "tha-ap504:7.2_0": "saṅghāpi ca gaṇāpi ca;",
  "tha-ap504:7.3_0": "Buddhakhettasamo natthi,",
  "tha-ap504:7.4_0": "sukhado sabbapāṇinaṁ.",
  "tha-ap504:8.1_0": "Namo te purisājañña,",
  "tha-ap504:8.2_0": "namo te purisuttama;",
  "tha-ap504:8.3_0": "Ekapattaṁ daditvāna,",
  "tha-ap504:8.4_0": "pattomhi acalaṁ padaṁ.",
  "tha-ap504:9.1_0": "Ekanavutito kappe,",
  "tha-ap504:9.2_0": "yaṁ pattamadadiṁ tadā;",
  "tha-ap504:9.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap504:9.4_0": "pattadānassidaṁ phalaṁ.",
  "tha-ap504:10.1_0": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap504:10.2_0": "…pe…",
  "tha-ap504:10.3_0": "viharāmi anāsavo.",
  "tha-ap504:11.1_0": "Svāgataṁ vata me āsi,",
  "tha-ap504:11.2_0": "…pe…",
  "tha-ap504:11.3_0": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap504:12.1_0": "Paṭisambhidā catasso,",
  "tha-ap504:12.2_0": "…pe…",
  "tha-ap504:12.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap504:13.1_0": "Itthaṁ sudaṁ āyasmā ekapattadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap504:14.1_0": "Ekapattadāyakattherassāpadānaṁ dutiyaṁ."
}