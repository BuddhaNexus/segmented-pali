{
  "ja471:0.1_0": "Jātaka",
  "ja471:0.2_0": "Dvādasakanipāta",
  "ja471:0.3_0": "Cūḷakuṇālavagga",
  "ja471:0.4_0": "8. Meṇḍakapañhajātaka",
  "ja471:1.1_0": "“Yesaṁ na kadāci bhūtapubbaṁ,",
  "ja471:1.2_0": "Sakhyaṁ sattapadampimasmi loke;",
  "ja471:1.3_0": "Jātā amittā duve sahāyā,",
  "ja471:1.4_0": "Paṭisandhāya caranti kissa hetu”.",
  "ja471:2.1_0": "“Yadi me ajja pātarāsakāle,",
  "ja471:2.2_0": "Pañhaṁ na sakkuṇeyyātha vattumetaṁ;",
  "ja471:2.3_0": "Raṭṭhā pabbājayissāmi vo sabbe,",
  "ja471:2.4_0": "Na hi mattho duppaññajātikehi”.",
  "ja471:3.1_0": "“Mahājanasamāgamamhi ghore,",
  "ja471:3.2_0": "Janakolāhalasaṅgamamhi jāte;",
  "ja471:3.3_0": "Vikkhittamanā anekacittā,",
  "ja471:3.4_0": "Pañhaṁ na sakkuṇoma vattumetaṁ.",
  "ja471:4.1_0": "Ekaggacittāva ekamekā,",
  "ja471:4.2_0": "Rahasi gatā atthaṁ nicintayitvā;",
  "ja471:4.3_0": "Paviveke sammasitvāna dhīrā,",
  "ja471:4.4_0": "Atha vakkhanti janinda etamatthaṁ”.",
  "ja471:5.1_0": "“Uggaputtarājaputtiyānaṁ,",
  "ja471:5.2_0": "Urabbhassa maṁsaṁ piyaṁ manāpaṁ;",
  "ja471:5.3_0": "Na sunakhassa te adenti maṁsaṁ,",
  "ja471:5.4_0": "Atha meṇḍassa suṇena sakhyamassa”.",
  "ja471:6.1_0": "“Cammaṁ vihananti eḷakassa,",
  "ja471:6.2_0": "Assapiṭṭhattharassukhassa hetu;",
  "ja471:6.3_0": "Na ca te sunakhassa attharanti,",
  "ja471:6.4_0": "Atha meṇḍassa suṇena sakhyamassa”.",
  "ja471:7.1_0": "“Āvellitasiṅgiko hi meṇḍo,",
  "ja471:7.2_0": "Na ca sunakhassa visāṇakāni atthi;",
  "ja471:7.3_0": "Tiṇabhakkho maṁsabhojano ca,",
  "ja471:7.4_0": "Atha meṇḍassa suṇena sakhyamassa”.",
  "ja471:8.1_0": "“Tiṇamāsi palāsamāsi meṇḍo,",
  "ja471:8.2_0": "Na ca sunakho tiṇamāsi no palāsaṁ;",
  "ja471:8.3_0": "Gaṇheyya suṇo sasaṁ biḷāraṁ,",
  "ja471:8.4_0": "Atha meṇḍassa suṇena sakhyamassa”.",
  "ja471:9.1_0": "“Aṭṭhaḍḍhapado catuppadassa,",
  "ja471:9.2_0": "Meṇḍo aṭṭhanakho adissamāno;",
  "ja471:9.3_0": "Chādiyamāharatī ayaṁ imassa,",
  "ja471:9.4_0": "Maṁsaṁ āharatī ayaṁ amussa.",
  "ja471:10.1_0": "Pāsādavaragato videhaseṭṭho,",
  "ja471:10.2_0": "Vitihāraṁ aññamaññabhojanānaṁ;",
  "ja471:10.3_0": "Addakkhi kira sakkhikaṁ janindo,",
  "ja471:10.4_0": "Bubhukkassa puṇṇaṁmukhassa cetaṁ”.",
  "ja471:11.1_0": "“Lābhā vata me anapparūpā,",
  "ja471:11.2_0": "Yassa medisā paṇḍitā kulamhi;",
  "ja471:11.3_0": "Pañhassa gambhīragataṁ nipuṇamatthaṁ,",
  "ja471:11.4_0": "Paṭivijjhanti subhāsitena dhīrā.",
  "ja471:12.1_0": "Assatarirathañca ekamekaṁ,",
  "ja471:12.2_0": "Phītaṁ gāmavarañca ekamekaṁ;",
  "ja471:12.3_0": "Sabbesaṁ vo dammi paṇḍitānaṁ,",
  "ja471:12.4_0": "Paramappatītamano subhāsitenā”ti.",
  "ja471:13.1_0": "Meṇḍakapañhajātakaṁ aṭṭhamaṁ."
}