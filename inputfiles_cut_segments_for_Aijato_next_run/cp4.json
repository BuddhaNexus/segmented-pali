{
  "cp4:0.1_0": "Cariyāpiṭaka",
  "cp4:0.2_0": "Akittivagga",
  "cp4:0.3_0": "Dānapāramī 4",
  "cp4:0.4_0": "Mahāsudassanacariya",
  "cp4:1.1_0": "“Kusāvatimhi nagare,",
  "cp4:1.2_0": "yadā āsiṁ mahīpati;",
  "cp4:1.3_0": "Mahāsudassano nāma,",
  "cp4:1.4_0": "cakkavattī mahabbalo.",
  "cp4:2.1_0": "Tatthāhaṁ divase tikkhattuṁ,",
  "cp4:2.2_0": "ghosāpemi tahiṁ tahiṁ;",
  "cp4:2.3_0": "‘Ko kiṁ icchati pattheti,",
  "cp4:2.4_0": "kassa kiṁ dīyatū dhanaṁ.",
  "cp4:3.1_0": "Ko chātako ko tasito,",
  "cp4:3.2_0": "ko mālaṁ ko vilepanaṁ;",
  "cp4:3.3_0": "Nānārattāni vatthāni,",
  "cp4:3.4_0": "ko naggo paridahissati.",
  "cp4:4.1_0": "Ko pathe chattamādeti,",
  "cp4:4.2_0": "kopāhanā mudū subhā’;",
  "cp4:4.3_0": "Iti sāyañca pāto ca,",
  "cp4:4.4_0": "ghosāpemi tahiṁ tahiṁ.",
  "cp4:5.1_0": "Na taṁ dasasu ṭhānesu,",
  "cp4:5.2_0": "napi ṭhānasatesu vā;",
  "cp4:5.3_0": "Anekasataṭhānesu,",
  "cp4:5.4_0": "paṭiyattaṁ yācake dhanaṁ.",
  "cp4:6.1_0": "Divā vā yadi vā rattiṁ,",
  "cp4:6.2_0": "yadi eti vanibbako;",
  "cp4:6.3_0": "Laddhā yadicchakaṁ bhogaṁ,",
  "cp4:6.4_0": "pūrahatthova gacchati.",
  "cp4:7.1_0": "Evarūpaṁ mahādānaṁ,",
  "cp4:7.2_0": "Adāsiṁ yāvajīvikaṁ;",
  "cp4:7.3_0": "Napāhaṁ dessaṁ dhanaṁ dammi,",
  "cp4:7.4_0": "Napi natthi nicayo mayi.",
  "cp4:8.1_0": "Yathāpi āturo nāma,",
  "cp4:8.2_0": "rogato parimuttiyā;",
  "cp4:8.3_0": "Dhanena vejjaṁ tappetvā,",
  "cp4:8.4_0": "rogato parimuccati.",
  "cp4:9.1_0": "Tathevāhaṁ jānamāno,",
  "cp4:9.2_0": "paripūretumasesato;",
  "cp4:9.3_0": "Ūnamanaṁ pūrayituṁ,",
  "cp4:9.4_0": "demi dānaṁ vanibbake;",
  "cp4:9.5_0": "Nirālayo apaccāso,",
  "cp4:9.6_0": "sambodhimanupattiyā”ti.",
  "cp4:10.1_0": "Mahāsudassanacariyaṁ catutthaṁ."
}