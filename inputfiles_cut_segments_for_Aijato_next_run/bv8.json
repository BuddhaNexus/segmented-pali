{
  "bv8:0.1_0": "Buddhavaṁsa",
  "bv8:0.2_0": "8. Sobhitabuddhavaṁsa",
  "bv8:1.1_0": "“Revatassa aparena,",
  "bv8:1.2_0": "sobhito nāma nāyako;",
  "bv8:1.3_0": "Samāhito santacitto,",
  "bv8:1.4_0": "asamo appaṭipuggalo.",
  "bv8:2.1_0": "So jino sakagehamhi,",
  "bv8:2.2_0": "mānasaṁ vinivattayi;",
  "bv8:2.3_0": "Patvāna kevalaṁ bodhiṁ,",
  "bv8:2.4_0": "dhammacakkaṁ pavattayi.",
  "bv8:3.1_0": "Yāva heṭṭhā avīcito,",
  "bv8:3.2_0": "bhavaggā cāpi uddhato;",
  "bv8:3.3_0": "Etthantare ekaparisā,",
  "bv8:3.4_0": "ahosi dhammadesane.",
  "bv8:4.1_0": "Tāya parisāya sambuddho,",
  "bv8:4.2_0": "dhammacakkaṁ pavattayi;",
  "bv8:4.3_0": "Gaṇanāya na vattabbo,",
  "bv8:4.4_0": "paṭhamābhisamayo ahu.",
  "bv8:5.1_0": "Tato parampi desente,",
  "bv8:5.2_0": "marūnañca samāgame;",
  "bv8:5.3_0": "Navutikoṭisahassānaṁ,",
  "bv8:5.4_0": "dutiyābhisamayo ahu.",
  "bv8:6.1_0": "Punāparaṁ rājaputto,",
  "bv8:6.2_0": "jayaseno nāma khattiyo;",
  "bv8:6.3_0": "Ārāmaṁ ropayitvāna,",
  "bv8:6.4_0": "buddhe niyyādayī tadā.",
  "bv8:7.1_0": "Tassa yāgaṁ pakittento,",
  "bv8:7.2_0": "dhammaṁ desesi cakkhumā;",
  "bv8:7.3_0": "Tadā koṭisahassānaṁ,",
  "bv8:7.4_0": "tatiyābhisamayo ahu.",
  "bv8:8.1_0": "Sannipātā tayo āsuṁ,",
  "bv8:8.2_0": "sobhitassa mahesino;",
  "bv8:8.3_0": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv8:8.4_0": "santacittāna tādinaṁ.",
  "bv8:9.1_0": "Uggato nāma so rājā,",
  "bv8:9.2_0": "dānaṁ deti naruttame;",
  "bv8:9.3_0": "Tamhi dāne samāgañchuṁ,",
  "bv8:9.4_0": "arahantā satakoṭiyo.",
  "bv8:10.1_0": "Punāparaṁ puragaṇo,",
  "bv8:10.2_0": "deti dānaṁ naruttame;",
  "bv8:10.3_0": "Tadā navutikoṭīnaṁ,",
  "bv8:10.4_0": "dutiyo āsi samāgamo.",
  "bv8:11.1_0": "Devaloke vasitvāna,",
  "bv8:11.2_0": "yadā orohatī jino;",
  "bv8:11.3_0": "Tadā asītikoṭīnaṁ,",
  "bv8:11.4_0": "tatiyo āsi samāgamo.",
  "bv8:12.1_0": "Ahaṁ tena samayena,",
  "bv8:12.2_0": "sujāto nāma brāhmaṇo;",
  "bv8:12.3_0": "Tadā sasāvakaṁ buddhaṁ,",
  "bv8:12.4_0": "annapānena tappayiṁ.",
  "bv8:13.1_0": "Sopi maṁ buddho byākāsi,",
  "bv8:13.2_0": "sobhito lokanāyako;",
  "bv8:13.3_0": "‘Aparimeyyito kappe,",
  "bv8:13.4_0": "ayaṁ buddho bhavissati.",
  "bv8:14.1_0": "Padhānaṁ padahitvāna,",
  "bv8:14.2_0": "…pe…",
  "bv8:14.3_0": "hessāma sammukhā imaṁ’.",
  "bv8:15.1_0": "Tassāpi vacanaṁ sutvā,",
  "bv8:15.2_0": "haṭṭho saṁviggamānaso;",
  "bv8:15.3_0": "Tamevatthamanuppattiyā,",
  "bv8:15.4_0": "uggaṁ dhitimakāsahaṁ.",
  "bv8:16.1_0": "Sudhammaṁ nāma nagaraṁ,",
  "bv8:16.2_0": "sudhammo nāma khattiyo;",
  "bv8:16.3_0": "Sudhammā nāma janikā,",
  "bv8:16.4_0": "sobhitassa mahesino.",
  "bv8:17.1_0": "Navavassasahassāni,",
  "bv8:17.2_0": "agāraṁ ajjha so vasi;",
  "bv8:17.3_0": "Kumudo nāḷino padumo,",
  "bv8:17.4_0": "tayo pāsādamuttamā.",
  "bv8:18.1_0": "Sattatiṁsasahassāni,",
  "bv8:18.2_0": "nāriyo samalaṅkatā;",
  "bv8:18.3_0": "Maṇilā nāma sā nārī,",
  "bv8:18.4_0": "sīho nāmāsi atrajo.",
  "bv8:19.1_0": "Nimitte caturo disvā,",
  "bv8:19.2_0": "pāsādenābhinikkhami;",
  "bv8:19.3_0": "Sattāhaṁ padhānacāraṁ,",
  "bv8:19.4_0": "caritvā purisuttamo.",
  "bv8:20.1_0": "Brahmunā yācito santo,",
  "bv8:20.2_0": "sobhito lokanāyako;",
  "bv8:20.3_0": "Vatti cakkaṁ mahāvīro,",
  "bv8:20.4_0": "sudhammuyyānamuttame.",
  "bv8:21.1_0": "Asamo ca sunetto ca,",
  "bv8:21.2_0": "ahesuṁ aggasāvakā;",
  "bv8:21.3_0": "Anomo nāmupaṭṭhāko,",
  "bv8:21.4_0": "sobhitassa mahesino.",
  "bv8:22.1_0": "Nakulā ca sujātā ca,",
  "bv8:22.2_0": "ahesuṁ aggasāvikā;",
  "bv8:22.3_0": "Bujjhamāno ca so buddho,",
  "bv8:22.4_0": "nāgamūle abujjhatha.",
  "bv8:23.1_0": "Rammo ceva sudatto ca,",
  "bv8:23.2_0": "ahesuṁ aggupaṭṭhakā;",
  "bv8:23.3_0": "Nakulā ceva cittā ca,",
  "bv8:23.4_0": "ahesuṁ aggupaṭṭhikā.",
  "bv8:24.1_0": "Aṭṭhapaṇṇāsaratanaṁ,",
  "bv8:24.2_0": "accuggato mahāmuni;",
  "bv8:24.3_0": "Obhāseti disā sabbā,",
  "bv8:24.4_0": "sataraṁsīva uggato.",
  "bv8:25.1_0": "Yathā suphullaṁ pavanaṁ,",
  "bv8:25.2_0": "nānāgandhehi dhūpitaṁ;",
  "bv8:25.3_0": "Tatheva tassa pāvacanaṁ,",
  "bv8:25.4_0": "sīlagandhehi dhūpitaṁ.",
  "bv8:26.1_0": "Yathāpi sāgaro nāma,",
  "bv8:26.2_0": "dassanena atappiyo;",
  "bv8:26.3_0": "Tatheva tassa pāvacanaṁ,",
  "bv8:26.4_0": "savanena atappiyaṁ.",
  "bv8:27.1_0": "Navutivassasahassāni,",
  "bv8:27.2_0": "āyu vijjati tāvade;",
  "bv8:27.3_0": "Tāvatā tiṭṭhamāno so,",
  "bv8:27.4_0": "tāresi janataṁ bahuṁ.",
  "bv8:28.1_0": "Ovādaṁ anusiṭṭhiñca,",
  "bv8:28.2_0": "datvāna sesake jane;",
  "bv8:28.3_0": "Hutāsanova tāpetvā,",
  "bv8:28.4_0": "nibbuto so sasāvako.",
  "bv8:29.1_0": "So ca buddho asamasamo,",
  "bv8:29.2_0": "tepi sāvakā balappattā;",
  "bv8:29.3_0": "Sabbaṁ tamantarahitaṁ,",
  "bv8:29.4_0": "nanu rittā sabbasaṅkhārā.",
  "bv8:30.1_0": "Sobhito varasambuddho,",
  "bv8:30.2_0": "Sīhārāmamhi nibbuto;",
  "bv8:30.3_0": "Dhātuvitthārikaṁ āsi,",
  "bv8:30.4_0": "Tesu tesu padesato”ti.",
  "bv8:31.1_0": "Sobhitassa bhagavato vaṁso chaṭṭho."
}