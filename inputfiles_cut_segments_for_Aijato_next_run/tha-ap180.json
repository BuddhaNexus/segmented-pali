{
  "tha-ap180:0.1_0": "Therāpadāna",
  "tha-ap180:0.2_0": "Kumudavagga",
  "tha-ap180:0.3_0": "8. Maṇipūjakattheraapadāna",
  "tha-ap180:1.1_0": "“Orena himavantassa,",
  "tha-ap180:1.2_0": "nadikā sampavattatha;",
  "tha-ap180:1.3_0": "Tassā cānupakhettamhi,",
  "tha-ap180:1.4_0": "sayambhū vasate tadā.",
  "tha-ap180:2.1_0": "Maṇiṁ paggayha pallaṅkaṁ,",
  "tha-ap180:2.2_0": "sādhucittaṁ manoramaṁ;",
  "tha-ap180:2.3_0": "Pasannacitto sumano,",
  "tha-ap180:2.4_0": "buddhassa abhiropayiṁ.",
  "tha-ap180:3.1_0": "Catunnavutito kappe,",
  "tha-ap180:3.2_0": "yaṁ maṇiṁ abhiropayiṁ;",
  "tha-ap180:3.3_0": "Duggatiṁ nābhijānāmi,",
  "tha-ap180:3.4_0": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap180:4.1_0": "Ito ca dvādase kappe,",
  "tha-ap180:4.2_0": "sataraṁsīsanāmakā;",
  "tha-ap180:4.3_0": "Aṭṭha te āsuṁ rājāno,",
  "tha-ap180:4.4_0": "cakkavattī mahabbalā.",
  "tha-ap180:5.1_0": "Paṭisambhidā catasso,",
  "tha-ap180:5.2_0": "…pe…",
  "tha-ap180:5.3_0": "kataṁ buddhassa sāsanaṁ”.",
  "tha-ap180:6.1_0": "Itthaṁ sudaṁ āyasmā maṇipūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap180:7.1_0": "Maṇipūjakattherassāpadānaṁ aṭṭhamaṁ."
}